urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms601# % % 54(@)(@@) % أم شيخ تناك بين يديه % % حين لا حاجب هناك يمط % 55(@)(@@) % ألزم اللؤم أنفك الذل حتى % % هو سيان ذلة والمقط % 56(@)(@@) % ذاك تحت المدى مذال وهذا % % دمل الذلة الذي لا يبط % % 57(@)(@@) % وإذا ما عراك ندمان كأس % لم يشبها القنديد والإسفنط % 58(@)(@@) % بت تيسا له قرون عوال % وهو تيس له نبيب وقفط % % 59(@)(@@) % نمت عن عرسك الحصان إلى الصب % % ح وباتت براكب النيك تمطو % % 60(@)(@@) % تسمعان الأصم صوتين شتى % % هي في نخرة وأنت تغط % % PageV01P2633 61(@)(@@) % فتبيتان في فضائح شنع % لم يكن ليلها عليك ليغطو % % 62(@)(@@) % هاكها مؤيدا هي الدهر في وج % % هك وسم وفي الصحائف خط % % PageV01P2634 البحر : - 1(@)(@@) % طلعت شنطف فقلنا جميعا % كيف أصبحت يا فسا القنبيط % 2(@)(@@) % فأجابت بشر حال فقلنا % % لم فقالت ختنت نفسي بليط % PageV01P2635 البحر : - 1(@)(@@) % أتاني أن البيهقي يسبني % % هوت أمه في أي مورطة ورط % 2(@)(@@) % وأيتما بلوى جناها لنفسه % % وأيتما نعمى وعافية غمط % 3(@)(@@) % تعرض لي مغرى بخرط قتادتي % % وهل يؤلم الخرط القتاد إذا خرط % 4(@)(@@) % وما كان ذنبي غير أن سامني استه % وثفر التي يؤوي فقلت له أمط % % 5(@)(@@) % عليك بأير غير أيري فإنه % % جواد له من غير طرزك مرتبط % % 6(@)(@@) % أقول لجلاد عميرة ظالما % فإن بساط النيك للنيك قد بسط % % 7(@)(@@) % عليك أبا اسحاق فاجعله نجعة % فإن أبا اسحاق نجعة من قحط % % 8(@)(@@) % إذا شئت نيك البيهقي وعرسه % فلا تتوسل بالوسائل واختبط % % 9(@)(@@) % أباح الورى حولاءه لا بأجرة % % سوى أنه شيخ إذا خبطت خبط % % 10(@)(@@) % وإن الخفوق الطيز تحبو سباله % حباءين شتى من خفيق ومن ضرط % PageV01P2636 11(@)(@@) % فيقبض في عثنونه نفحاتها % % فيا لك من كبش على شكله ربط % % 12(@)(@@) % يصول علينا البيهقي بمذهب % يرى الظرف فيه بالشطارة قد خلط % % 13(@)(@@) % ويلقى إلى حوت آسته حوت يونس % وثعبان موسى في لزاز فتسترط % 14(@)(@@) % فيا سوأتا للظرف والفتك أصبحا % % يناكان في شيخ يناك لدن قمط % 15(@)(@@) % وإن ابتذالي فيه شعري لحادث % تكاد السموات العلا منه تنكشط % 16(@)(@@) % يعيب انقباضي معجبا بانبساطه % % ومن ينبسط للحر والعبد ينبسط % % 17(@)(@@) % ويزعمني صحفت في الشعر كاذبا % ملطا وكم نكلت من كاذب ملط % 18(@)(@@) % فقولا له بئس الجنى ما جنيته % % لنفسك يا ثلطا جنيا كما ثلط % 19(@)(@@) % غدا الأسل 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms602# الريان همك وحده % إذا هو للوجعاء منك وقد ملط % % 20(@)(@@) % وأنت ترى ما يلفظ الناس كلهم % % به أسلا من حبك الأسل السبط % PageV01P2637 21(@)(@@) % أيا غلطا في الخلق لا من إلهه % % ولكن من الدهر الذي ربما غلط % % 22(@)(@@) % أأنت تغني بي وأنت معلم % أشيوه مخبول بكوعك تمتخط % % 23(@)(@@) % تراعي سقاط المنشدين ولا ترى % % سقاط التي أضحت لغيرك تمتشط % % 24(@)(@@) % حليلتك المشهور في الناس أنها % % عمول من الأعمال أحبط ما حبط % % 25(@)(@@) % حويلاء تزني لا تراقب قبحها % % ولا نتن حشيها المجيفين والإبط % % 26(@)(@@) % ولا خبث ريح من مبال ملعن % ولا شعرا في السفل والعلو قد شمط % % 27(@)(@@) % ولا الله بل قد راقبت فتأولت % فريا من التأويل بول بل ثلط % 28(@)(@@) % رأت تركها اللذات من خوف ربها % % قنوطا وأن الله إن قنطت سخط % % 29(@)(@@) % فمالت مع الراجي الممتع نفسه % ولم تر أعمال القنوط مع القنط % % 30(@)(@@) % عتبت علينا أن عففنا عن التي % % تؤاجرها فاستنشق الغيظ وآستعط % % PageV01P2638 31(@)(@@) % لساني حسام قد أجدت اختراطه % عليك ولكن أير غيري فاخترط % % 32(@)(@@) % فقد سمت أيري نيك عرسك جاهدا % ونيكك يا بن الزانيين فما نشط % % 33(@)(@@) % ستضحك من شعري وأنت معبس % تميز من غيظ علي وتختلط % % 34(@)(@@) % كما ضحك البغل المزير إذ لوى % % جحافله بيطاره غير مغتبط % % 35(@)(@@) % ويعلم ذو التمييز أنك موجع % توقر باديه وخافيه يختلط % 36(@)(@@) % هجوتك وغدا يرفع الشتم قدره % فشعري مرحوم وأنت الذي غبط % PageV01P2639 البحر : - 1(@)(@@) % أحدث الصفع في دماغ أبي أح % مق لا شك خف واختلاطا % % 2(@)(@@) % فرأى حمله مؤونة حربي % % حمله النائكين شقرا سباطا % % 3(@)(@@) % إن لي مشية أغربل فيها % % آمنا أن أساقط الأسقاطا % % 4(@)(@@) % لا كمن لو مشى لظل يداني % % فقحة لا تفارق المسواطا % % 5(@)(@@) % وجل القلب أن تجيء هنات % من عجان لا يستفيق لواطا % % 6(@)(@@) % مشية لو مشيتها يا أبا أح % مق لم تملك الحتار ضراطا % % 7(@)(@@) % بل سلاحا فيه الأجنة والأغ % راس تحكي أمشاجهن المخاطا % % PageV01P2640 البحر : - 1(@)(@@) % رأيت جليسي لا يزال يروعه % بياض القذى في لحيتي فيميطه % 2(@)(@@) % فكيف به عما قليل إذا رأى % % قذى الشيب قد عفى عليها سقيطه % 3(@)(@@) % وخطت بألوان التكاليف وهيها % % وما الدهر أوهاه فمن ذا يخيطه % 4(@)(@@) % سلام على ليل الشباب تحية 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms603# % إذا ما صباح الشيب لاح شميطه % PageV01P2641 البحر : - 1(@)(@@) % لشاعرنا خالد في استه % % مآرب أخرى سوى الغائط % 2(@)(@@) % يغني الندامى بها تارة % ويؤتى على شيبه الواخط % 3(@)(@@) % يقضي بها الشيخ أوطاره % برغم المعنف والساخط % 4(@)(@@) % ولم يهجر الشيخ لذاته % % ويجف المعاصي كالقانط % 5(@)(@@) % له زوجة شر ما زوجة % تلقطها شر ما لاقط % 6(@)(@@) % مشهرة لو مشى خلفها % % نيي لقيل له شارط % % 7(@)(@@) % تناك وقرنانها حاضر % بمنزلة الغائب الشاحط % % 8(@)(@@) % فإن غار قالت له نفسه % تغافل كأنك في واسط % % 9(@)(@@) % أخالد كم لك من صافع % وكم في سبالك من ضارط % % 10(@)(@@) % وأنت صبور لعض الهوا % % ن كصبر البعير على الضاغط % % PageV01P2642 11(@)(@@) % أذلك حبك عجر الفيا % % ش يا آبن المقاول من ناعط % % 12(@)(@@) % حلفت لئن لم تكن ساقطا % فما في البرية من ساقط % % 13(@)(@@) % لئن لزك الجهل في عقدة % من الشر تأبى على الناشط % % 14(@)(@@) % لكم أهلك الجهل من جاهل % وكم أورط الليل من خابط % 15(@)(@@) % ومثلك في النوك قد كادني % % فأصبح ذا عمل حابط % PageV01P2643 البحر : - 1(@)(@@) % سألت يوما خالدا % ذا المجد والبيت الوسيط % 2(@)(@@) % لم ذل عزك للقمد % د فقال قول المستشيط % 3(@)(@@) % ميز بعقلك أينا ال % % مخنوق في بيت الضريط % 4(@)(@@) % حتى تراه في الخنا % % ق يغط أنواع الغطيط % % 5(@)(@@) % بل أينا مني ومن % % ه يغت في السلح العبيط % % 6(@)(@@) % قلت القمد فقال لي % % اسكت إذن يا بن النبيط % % 7(@)(@@) % لم لمتني متغطرسا % لا در درك من خليط % % 8(@)(@@) % صدق المفوه خالد % ذو المقول العضب البسيط % % 9(@)(@@) % إن المحاط به لأو % لى بالذليل من المحيط % PageV01P2644 البحر : - 1(@)(@@) % بؤسا لقوم تحدوني بجهلهم % والجهل يورط قوما شر إيراط % 2(@)(@@) % هبهم أدلوا على حلمي أما علموا % % أن القوافي لا ترضى بإسخاطي % % 3(@)(@@) % قالوا أتشتم مجنونا فقلت لهم % لا بد للمس من كي وإسعاط % % 4(@)(@@) % عندي دواء أبي حفص ورقيته % إن كان ذلك أعيا طب بقراط % 5(@)(@@) % كم مثله من شقي قد وصلت له % % في حلبة الكد أشواطا بأشواط % 6(@)(@@) % شغلته بالهواهي عن معيشته % % وذاك أني عليه غير محتاط % 7(@)(@@) % دعني وإيا أبي حفص سأتركه % % حجام ساباط بل وراق ساباط % 8(@)(@@) % قد كان أجدى عليه من مشاتمتي % % شغل يرد عليه فضل قيراط % % PageV01P2645 البحر : - 1(@)(@@) % يا رب بصري رصاصي 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms604# الشمط % % عاندني فلو تنفست ضرط % 2(@)(@@) % في الرأس واللحية منه شهبة % زرقاء والوجه لطرموس النبط % % 3(@)(@@) % كأنه جوزة هند أخذت % فقشرت أطرافها دون الوسط % 4(@)(@@) % ينتقد الشعر ولا يعرفه % أكثر من قولته هذا النمط % PageV01P2646 البحر : - 1(@)(@@) % هبت لوهب ريح سوء عاصف % بارى بها شهر الرياح شباطا % % 2(@)(@@) % من فقحة حق اتساع حتارها % % إذ لا تفارق دهرها مسواطا % % 3(@)(@@) % لو أنها هبت خلال معسكر % لم يبق فيه حفيفها فسطاطا % % 4(@)(@@) % مرت على آذاننا وأنوفنا % % فأساءت الأسماع والأسعاطا % % 5(@)(@@) % ونعت إلينا مفلحا سقيا له % من فارس منع الحريم وحاطا % % 6(@)(@@) % فكأنها وكأن مقتل مفلح % يوم القيامة قدم الأشراطا % % 7(@)(@@) % يا ضرطة سبق البريد بريدها % % ركضا وخلف شوطها أشواطا % % 8(@)(@@) % أصبحت أنبل ضرطة وأجلها % % إذا كان علمك بالغيوب أحاطا % % 9(@)(@@) % يا وهب إن تك قد ولدت صبية % فبحملهم شقرا عليك سباطا % % 10(@)(@@) % من كان لا ينفك ينكح دهره % ولد البنات وأسقط الأسقاطا % % PageV01P2647 11(@)(@@) % تلد النساء من الرجال وإنما % % يلد الرجال من الرجال ضراطا % % 12(@)(@@) % لو كنت مثلك ثم جئت بمثلها % % لضربت فاضحتي بها أسواطا % % 13(@)(@@) % ولما وطئت بساط دار خليفة % حتى الممات ولا اخترقت سماطا % % 14(@)(@@) % قد أعظمت جرما فعاقبها به % % واجعل لها غير الأيور سياطا % % 15(@)(@@) % إن العقوبة بالأيور تزيدها % % زللا إلى ما قدمت وسقاطا % % 16(@)(@@) % قال الوزير وقد رميت برأسها % % قم فالتمس مهدا لها وقماطا % % 17(@)(@@) % هذي عقوبة من يكد عبيده % % حتى يعرق منهم الآباطا % % 18(@)(@@) % ويلفق الأخبار لا متحرجا % فيها ولو بدم النبي أشاطا % % 19(@)(@@) % شهدت ولادتك الشهيرة أنها % % من فقحة لا تستفيق لواطا % % 20(@)(@@) % يا وهب ويحك قد علمت بوهيها % % أفلا دعوت لرتقتها خياطا % % PageV01P2648 21(@)(@@) % عطست وحق لها العطاس لأنها % % مزكومة أبدا تسيل مخاطا % % 22(@)(@@) % دع خدمة الخلفاء لا تعرض لها % % وتعاط ويحك غير ما تتعاطى % % 23(@)(@@) % يحتاط للخلفاء في سلطانهم % % من كان في أمر آسته محتاطا % % 24(@)(@@) % ما هذه النفخ التي أغفلتها % % يا من يفوق بطبه بقراطا % % 25(@)(@@) % كنا نقول إذا مررت مواكبا % لله درك كاتبا خطاطا % % 26(@)(@@) % فالآن صرت إذا مررت فقولنا % % لا در درك كاتبا ضراطا % % 27(@)(@@) % يا آل وهب حدثوني عنكم % لم لا ترون العدل والإقساطا % % 28(@)(@@) % ما بال ضرطتكم يحل رباطها % % عفوا ودرهمكم يشد رباطا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms605# % % 29(@)(@@) % صروا ضراطكم المبذر صركم % % عند السؤال الفلس والقيراطا % % 30(@)(@@) % أو فاسمحوا بضراطكم ونوالكم % هيهلتلستم للنوال نشاطا % % PageV01P2649 31(@)(@@) % لو جدتم بهما معا فتواءما % % فرشا لكم عند الرحال بساطا % % 32(@)(@@) % لكنكم فرطتم في واحد % وهو الضراط فعدلوا الإفراطا % % 33(@)(@@) % فضحت كتابتكم وقنع مجدكم % % خزيا وأسقط جاهكم إسقاطا % % 34(@)(@@) % فاستأنفوا الأعمال إن ضراطكم % % بالأمس أحبط ما مضى إحباطا % % 35(@)(@@) % فإذا شهدتم مشهدا وأبوكم % لم تشبهوا يعقوب والأسباطا % % 36(@)(@@) % قبحتم ولدا وقبح والدا % لا تهتدون من الرشاد صراطا % % 37(@)(@@) % لا قدس الخلف المخلف منكم % % ولدا ولا فراطكم فراطا % % 38(@)(@@) % فلكونكم في صلب آدم نطفة % كانت محورة أمره إهباطا % % PageV01P2650 البحر : - 1(@)(@@) % أغلاء وبلاء % وبريدي ضروط % 2(@)(@@) % وأعاد قد أحاطوا % % لحق الناس القنوط % 3(@)(@@) % تخذ الأمة وهبا % عجبا أن قال طوط % 4(@)(@@) % كيف لا يضرط ألفا % واسته الدهر تلوط % 5(@)(@@) % حادث يا آل وهب % فيه للقدر سقوط % 6(@)(@@) % أكلوه فانتزعت به أسنانهم % % وتهشمت اقفاؤهم بالحائط % % 6(@)(@@) % يتناعرون كانهم قد أوثقوا % % خاقان أو هزموا كتائب ناعط % % 6(@)(@@) % بعثوا عليه بنينهم وبناتهم % من بين ناتفة وى خر سامط % % 6(@)(@@) % أسر المؤذن خالد وضيوفه % % أسر الكمي هفا خلال المآقط % % 6(@)(@@) % فضحت تلك البلاغا أسر المؤذن خالد وضيوفهأسر الكمي هفا خلال المآقط بعثوا عليه بنينهم وبناتهممن بين ناتفة وى خر سامط يتناعرون كانهم قد أوثقواخاقان أو هزموا كتائب ناعطأكلوه فانتزعت به أسنانهم وتهشمت اقفاؤهم بالحائط % % ت وهاتيك الخطوط % % PageV01P2651 البحر : - 1(@)(@@) % أشجتك منزلة بمرجي راهط % % كلا ولا دمن عفت بشلاهط % % 2(@)(@@) % بل معشر وعدتهم فجراتهم % بمغابط فإذا هم بمهابط % % 3(@)(@@) % ظلوا وقد أسروا المؤذن بينهم % وكأنما هزموا كتائب ناعط % % 4(@)(@@) % وخلو بشلو ذبيحهم فرأيتهم % % من ناتف ريشا وآخر مارط % 5(@)(@@) % مستعملين أكفهم في أمره % ببوادر سبقت أناة السامط % % 6(@)(@@) % طبخوه ثم أتوا به قد أبرمت % أوتاره لمنادف وبرابط % % 7(@)(@@) % متجملا لدجاجه متجلدا % كتجلد المجلود بين ربائط % % 8(@)(@@) % ولقد رمته يوم ذلك قدرهم % % بغطامط من غليها وغطامط % % 9(@)(@@) % حملوا عليها كل ماء عندهم % % وفرات كوفتهم ودجلة واسط % % 10(@)(@@) % واها لذاك الديك بين مساقط % منه عهدناها وبين ملاقط % % PageV01P2652 11(@)(@@) % قوام أسحار مؤذن حارة % سفاد زوجات كمي مآقط % % 12(@)(@@) % ينفي مناعسه بنفس شهمة % ويشاهد الهيجا بجأش رابط % % 13(@)(@@) % وثبت عليه عصابة كوفية % ببوادر من بأسها وفوارط 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms606# % % 14(@)(@@) % من ناشىء محض الحلاق وشيخة % شوهاء لائطة وشيخ لائط % % 15(@)(@@) % يعدو الأصاغر والأكابر خلفه % عدو الكلاب على الشبوب الناشط % 16(@)(@@) % قسطوا عليه قسوط غامط نعمة % والمؤبقات بمرصد للغامط % % 17(@)(@@) % ولرب مقسوط عليه بغرة % حلت بليته برأس القاسط % 18(@)(@@) % ومن الجرائم ما يكون عقابه % نقدا فكم ناب هنالك ساقط % 19(@)(@@) % أكلوه فانتثرت له أسنانهم % % وتهشمت أقفاؤهم بالحائط % % 20(@)(@@) % من بين ناب إنما هو بيرم % عظما وبين ثنية كالشاحط % % PageV01P2653 21(@)(@@) % وطواحن قد خرقت جنباتها % % فكأن أنكلها سلاح مرابط % % 22(@)(@@) % وكأن وقع مشارط من ريشه % % في تلكم الأحناك وقع مشارط % % 23(@)(@@) % مازال يشرطهم فمنه شرطة % ومن العكوف عليه ضرطة ضارط % % 24(@)(@@) % سقيا لمنتصر هناك لنفسه % % يفري فري مزايل ومخالط % % 25(@)(@@) % لقي الأنامل والمراضع مقدما % لم ينهزم عنها بأجر حابط % % 26(@)(@@) % وغدت تصيح عظامه وعروقه % ليفيق ذو جزع عليه فارط % % 27(@)(@@) % لا تبكين على قتادة خارط % وابك الدماء على بنان الخارط % % 28(@)(@@) % وغدت مشايخهم وقد كتبوا لنا % % بنواصح التوبات كتب شرائط % 29(@)(@@) % أكلوا مؤذنهم فأضحوا كلهم % فد عوجلوا بعقاب رب ساخط % 30(@)(@@) % يتزحرون بأنفس مجهودة % تبكي وتندر ندرة في الغائط % PageV01P2654 31(@)(@@) % أبصارهم نحو السماء كأنما % % بصروا بها تطوى بكفي كاشط % 32(@)(@@) % من باسط كف الدعاء وقابض % كف الدواء حذار موت ذاعط % % 33(@)(@@) % عسرت عليه لظلمه أنفاسه % فكأنه في لحد قبر ضاغط % 34(@)(@@) % يدعو بنية قانط لا شفعت % من دعوة وصلت بنية قانط % % 35(@)(@@) % يتنفسون لكل ضرطة ضارط % أسفا لها ولكل ثلطة ثالط % % 36(@)(@@) % يا لهف أنفسهم على ضرطاتهم % بالأمس من ذاك السلاح الواخط % % 37(@)(@@) % لو أنها وهبت لهم في يومهم % % أضحوا وهم من روحها بمغابط % % 38(@)(@@) % بعدا لهم بعدا لهم بعدا لهم % % من قابض كفا وآخر باسط % % 39(@)(@@) % سخطوا مودتهم وخانوا جارهم % % لا فارق الأوداج مدية ساحط % % 40(@)(@@) % ديك تناوحت الديوك لفقده % مازال شيخ عشائر وأراهط % % PageV01P2655 41(@)(@@) % ومن العجائب أنهم ورطوا به % % في المهلكات أشد ورطة وارط % % 42(@)(@@) % ورأوا بقيته أصح معاذة % للطفل بين موازج وقوامط % % 43(@)(@@) % فمتى اشتكت أطفالهم من جنة % دلفوا لهم من ماله بمساعط % % 44(@)(@@) % ومتى رأوا ديكا ولو من فرسخ % أبصرتهم يعدون عدو مبالط % % 45(@)(@@) % لا مقبلين إليه لكن هربا % منه حذار معاطب وموارط % % 46(@)(@@) % فهم لغوغاء القبيلة لعبة % في عسكر متضاحك 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms607# متضارط % 47(@)(@@) % ودت حديثهم الولاة فربما % % نفذت به في اليوم عشر خرائط % 48(@)(@@) % ما كان ديكا بل حديدا باردا % ولرب شيء للظنون مغالط % % 49(@)(@@) % لاقى هنالك كل ذلك لم يخم % % عنه وهم من ضارط أو ناحط % % 50(@)(@@) % وأقول موعظة لرائد منزل % تهديه معرفة وآخر خابط % % PageV01P2656 51(@)(@@) % لا تنزلن بمنزل متكوف % وتنح عنه إلى المحل الشاحط % % 52(@)(@@) % إن الغوائل في المقاحط جمة % فتوق غائلة المراد القاحط % % 53(@)(@@) % وآعمد إذا شئت الجوار إلى الذرى % % إن المكاره أولعت بالهابط % % 54(@)(@@) % جاورت في كوفان شر عصابة % % من صامت عيا وآخر لاغط % 55(@)(@@) % دقوا فلو أولجتهم لتولجوا % % من دقة في سم إبرة خائط % 56(@)(@@) % دلفوا لجارهم بشر لازم % وتجانفوا عنه بخير مائط % 57(@)(@@) % ألفيتهم من شر قنية مقتن % للمقتنين وشر لقطة لاقط % % 58(@)(@@) % وثبوا علي سفاهة فوسمتهم % وسم المسطع بعد وسم العالط % % 59(@)(@@) % قوم يبيت الرشد فيهم ضائعا % والغي بين دواهن ومواشط % % 60(@)(@@) % المشترين فياشلا لنسائهم % % بدراهم ووظائفا بقرارط % % PageV01P2657 61(@)(@@) % ما شئت من عقل ضعيف واهن % فيهم ومن خبل شديد ضابط % 62(@)(@@) % لو أن لؤم الناس قيس بلؤمهم % % ما كان فيه قيس نقطة ناقط % PageV01P2658 البحر : - 1(@)(@@) % أيا هنتاه هل لك في هريس % بلحمان النواهض والبطوط % 2(@)(@@) % وأضلاع الرخال مربيات % بكسب المرو والعجم اللقيط % 3(@)(@@) % صنيعة خابر صنع مجيد % أخي علم بصنعتها محيط % 4(@)(@@) % أمل الليل يعقدها بضرب % فجاء بها تمدد كالخيوط % 5(@)(@@) % وبين يديك من مري عتيق % توارثه القرون عن النبيط % % 6(@)(@@) % فتبرك فوق صفحتها بروكا % كما برك البعير على الخبيط % % 7(@)(@@) % فيا لله من لقم هناكم % % تجاوب بالشحيج وبالغطيط % % PageV01P2659 البحر : - 1(@)(@@) % ترى الرعية إما راغيا وسطا % أو رابضا حجرة من مرتع وسط % 2(@)(@@) % فليس في الناس مغبوط بمغبطه % لأنه ليس فيهم غير مغتبط % 3(@)(@@) % يا طالب العرف أعيته وسائله % دع الوسائل والأسباب واختبط % 4(@)(@@) % اليوم تبلغ ما أملت من أمل % وما تمنيت من أمنية شطط % PageV01P2660 البحر : - 1(@)(@@) % ألذ من فائقة الإبهط % ومن شوا سمط نظيف السمط % 2(@)(@@) % ولحم طير وصدور البط % % خرطوم سلسال من الإسفنط % % 3(@)(@@) % في قرية من قريات القبط % بسر من را في نسيم الشط % % 4(@)(@@) % قبطية في حلل ومرط % % لعبة عاج صورة في خرط % % 5(@)(@@) % جاءت به مشددا بالشرط % خوادم يحملنه بضبط % 6(@)(@@) % كأنه 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms608# بعض رجال الزط % قالت نحط الهدي قلنا حطي % % 7(@)(@@) % وكايلي واحتكمي وخطي % % وهذه نقودنا فاشتطي % % 8(@)(@@) % فاحتضنت حقويه تحت الإبط % % وانتزعت عنه شناق الربط % % 9(@)(@@) % فارفض ينهل بغير ضبط % % كأنه جرح عظيم البط % 10(@)(@@) % يكتال ما فيه بغير شرط % . . . . . . . . . . . . . زق النفط % PageV01P2661 11(@)(@@) % ما زلت أسقاها وأسقي رهطي % % حتى تنادى القوم قط قط % % PageV01P2662 البحر : - 1(@)(@@) % وقائل لم هجوت الورد معتمدا % فقلت من بغضه عندي ومن سخطه % 2(@)(@@) % يا مادح الورد لا ينفك عن غلطه % ألست تبصره في كف ملتقطه % 3(@)(@@) % كأنه سرم بغل حين يخرجه % % عند الرياث وباقي الروث في وسطه % PageV01P2663 البحر : - 1(@)(@@) % ألست ترى اليوم المليح المغايظا % % رعاك مليك لم يزل لك حافظا % % 2(@)(@@) % غدا الدجن فيه يقتضي اللهو أهله % % وقد يقتضيكالحق من ليس لافظا % % 3(@)(@@) % فطورا ترى للشمس فيه سيارة % وطورا ترى الشمس طرفا ملاحظا % % 4(@)(@@) % غدا بالذي أهداه خلا ملاطفا % وإن كان ضدا بالصيام مغالظا % % 5(@)(@@) % تحفى فقد أضحى الندى فيه فائضا % وأعفى فقد أضحى الأذى فيه فائظا % % 6(@)(@@) % وقد عدم المعصوم فيه رقيبه % % كما عدم القينات فيه الحوافظا % % 7(@)(@@) % ولكنه الشهر الذي غاب لهوه % فعادت ملاهي الناس فيه مواعظا % % 8(@)(@@) % أصامكموه الله في ظل غبطة % وأبقاكم غيظا لذي الغل غائظا % % 9(@)(@@) % جزاء بما لقيتموه طلاقة % وخالفتم فيه الشهاوى اللعامظا % % 10(@)(@@) % ألا أيها المكني باسم محمد % فدتك نفوس اللاحظيك الملاحظا % % PageV01P2664 11(@)(@@) % حكى يومنا هذا نداك وحسنه % % إذا ما غدا يحمي نثاك محافظا % % 12(@)(@@) % على أنه لم يحك فعلك إنما % % حكى وعدك الغوث النفوس الفوائظا % % 13(@)(@@) % ولم يحك شيئا من ذكائك إنه % % إذا كنت فيه شاتيا كنت قائظا % % 14(@)(@@) % فعش لابن حاجات وصاحب دولة % % إذا الأمر أضحى فادح الثقل باهظا % % 15(@)(@@) % ولا زلت محمود البلاء جميله % % إذا استخرجت منك الهنات الحفائظا % % 16(@)(@@) % أراك إذا ما كنت صدرا لموكب % أثار عجاجا واستثرت مغائظا % % 17(@)(@@) % وظلت عيون الناس شتى شؤونها % % فغضت ومدت عند ذاك لواحظا % % 18(@)(@@) % يصادون من لولاه لاقت كفاتهم % % شدائد من شغب الخطوب غلائظا % % 19(@)(@@) % جللت فلم تعدم من الناس مغضيا % ورقت فلم تعدم من الناس لاحظا % % 20(@)(@@) % وإن كنت يوم الحفل صدرا لمجلس % % تركت خصيم الحق أخرس واعظا % % PageV01P2665 21(@)(@@) % تظل إذا نامت عقول ذوي العمى % % وإن حددوا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms609# زرقا إليك جواحظا % % 22(@)(@@) % تغاضى لهم وسنان بل متواسنا % وتوقظهم يقظان لا متياقظا % % 23(@)(@@) % وترمي الرمايا في المقاتل عادلا % إذا أكثرت نبل الرماة العظاعظا % % 24(@)(@@) % حلوت ولم تضعف فلم تك طعمة % ولا أنت مجتك الشفاه لوافظا % % 25(@)(@@) % بقيتم بني وهب فإن بقاءكم % % صلاح وإن ساء العدو المغايظا % % 26(@)(@@) % ومليتم للحظ ركنا موطدا % يمليكم للعز ركنا مدالظا % % 27(@)(@@) % مقايظنا فيكم مشات بجدكم % % وكانت مشاتينا بقوم مقايظا % % 28(@)(@@) % عجبت لقوم ينفسون حظوظكم % وأنتم أناس تحملون البواهظا % % 29(@)(@@) % وكنتم قدامى حين كانوا خوافيا % وكنتم صميما حين كانوا وشائظا % % 30(@)(@@) % يغيظهم استحقاقكم وحقوقكم % % فلا عدموا تلك الأمور الغوائظا % % PageV01P2666 31(@)(@@) % أيا حسنا أحسن فما زلت محسنا % تيقظ للحسنى فتشأى الأياقظا % % 32(@)(@@) % أفض من ندى لو حمل المزن بعضه % لراحت روايا المزن كظائظا % % 33(@)(@@) % أعيذك أن تغشاك في ونية % % ولست على مولى سواك مواكظا % % 34(@)(@@) % أجرني أن ألفي لغيرك سائلا % مكاتب أقوام وطورا ملافظا % % 35(@)(@@) % ولا تسرحني في اليبيس مشاتيا % كفاني لعمري باليبيس مقايظا % % 36(@)(@@) % ألم تجدوني آل وهب لمدحكم % % بنظمي ونثري أخطلا ثم جاحظا % % 37(@)(@@) % نسجت لكم حتى توهمت ناسجا % وقرظتكم حتى توهمت قارظا % % 38(@)(@@) % وكنتم غيوثا خارقات شواتيا % روائع ثرات العزالي قوائظا % % 39(@)(@@) % فإن أنا لم تحظظ لديكم وسائلي % % فمن ذا الذي تلفى لديه حظائظا % % 40(@)(@@) % على أنه لا حمد لي إن منحتكم % % مسامح مجد جارني لا مناكظا % % PageV01P2667 41(@)(@@) % يسير على المداح أن يمدحوكم % أصابوا لألفاظ المديح ملافظا % % 42(@)(@@) % ولو حاولوه في سواكم لصادفوا % % مناكب دفع دون ذاك مدالظا % % 43(@)(@@) % منحتكها حولية بنت يومها % % عكاظية أشجي بها المتعاكظا % % 44(@)(@@) % ففوق قداحي واهدها بنصالها % % وريش ورعظ لا عدمتك راعظا % % PageV01P2668 البحر : - 1(@)(@@) % مذ صرت همي في النوم واليقظه % أتعبت مما أهذي بك الحفظه % 2(@)(@@) % وعظت نفسي فخالفت عظتي % % وخالف القلب فيك من وعظه % 3(@)(@@) % وكيف بالصبر عنك يا حسنا % % يأمر بالسيئات من لحظه % 4(@)(@@) % يا من حلا في الفؤاد منظره ال % % حلو فما مجه ولا لفظه % 5(@)(@@) % عذبني منك يا معذبتي % % ونزهتي في المنام واليقظه % 6(@)(@@) % وجه إلى كم تصيد رقته % قلبي وقلب كم أشتكي غلظه % % PageV01P2669 البحر : - 1(@)(@@) % ما يوفيك حقك التقريظ % كفء تقريظك العليم الحفيظ % 2(@)(@@) % فيك أشياء من يواليك مسرو % % ر بها والعدو منها مغيظ 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms610# % 3(@)(@@) % لك فيها تيقظ غير محتا % % ج إلى أن يعينه تيقيظ % 4(@)(@@) % كم تحفظت من وصية مجد % لم ينفلك حفظها تحفيظ % % 5(@)(@@) % أنت غيث يقيظ فينا حياه % إذ حيا الغيث لا يكاد يقيظ % % 6(@)(@@) % إن يكن ما فعلت برا لطيفا % إن ميثاق شكره لغليظ % % 7(@)(@@) % منك قدحي ومنك نصلي والفو % ق ومنك الترييش والترعيظ % % 8(@)(@@) % أي شيء أقول يا من عداه % % في نداه التنكيد والتنكيظ % % 9(@)(@@) % أنت قبل التقريظ من كمل ال % % له فماذا يزيدك التقريظ % 10(@)(@@) % جهد الناس أن يدانوك في المج % % د فما قارب الصميم الوشيظ % PageV01P2670 11(@)(@@) % وجرى الشعر في مداك فلم يل % % حقك ترقيقه ولا التغليظ % 12(@)(@@) % أنت حلو وأنت مر وما تل % فظ كلا وكل مر لفيظ % % 13(@)(@@) % أريحي ملحظ في النوادي % % للأيادي يهزك التلحيظ % % 14(@)(@@) % هبزري موعظ بذوي الذم % م فقد صان عرضك التوعيظ % % 15(@)(@@) % تحمل الثقل حمل غير بهيظ % وأخو شكر ما فعلت بهيظ % % 16(@)(@@) % فالبس العمر سابغا ومعادي % % ك حضيض وأنت عال حظيظ % % 17(@)(@@) % ذو ندى غامر يفيض فتضحى % % أنفس الحاسدين فيه تفيظ % 18(@)(@@) % بعطايا موفرات هي الإر % واء بعد الإشباع لا التلميظ % 19(@)(@@) % لا تزال يا أبا الحسين أخا الإح % % سان والحسن غائظا من تغيظ % % 20(@)(@@) % لك بطن من الفضول خميص % وولي من الفضول كظيظ % % PageV01P2671 البحر : - 1(@)(@@) % لا ترى نرجسا يشبه بالور % % د إذا ما أدرت فكرا ولحظا % % 2(@)(@@) % ومن الورد ما يشبه بالنر % % جس علما بأن في ذاك حظا % % PageV01P2672 البحر : - 1(@)(@@) % أول الشهر أول الأسبوع % طلع الطالعان خير طلوع % 2(@)(@@) % مقبل فيه مقبل بسعود % وقعا بالسواء خير وقوع % 3(@)(@@) % ضم صدريهما اتفاق ينادي % % يا له مسعفا برأب الصدوع % 4(@)(@@) % مثل ما ضم عاتبين اعتناق % عند وصل مجدد ورجوع % % 5(@)(@@) % جاء شهر تحبه يا بن يحيى % % لا لما فيه من سجايا المنوع % % 6(@)(@@) % بل لما فيه من وفاقك فيما % % يصحب الدين من تقى وخشوع % % 7(@)(@@) % وصلاة تقيمها كل إني % من سجود تطيله وركوع % % 8(@)(@@) % وعفاف في القلب والطرف والأط % % راف عن كل محرم ممنوع % 9(@)(@@) % رهبة للإله بل رغبة من % % ك بقدر عن الخنا مرفوع % 10(@)(@@) % أقبل الطائر المبارك محمو % % دا جميل المرئي والمسموع % PageV01P2673 11(@)(@@) % ولك الفضل يا بن يحيى عليه % % غير مستنكر 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms611# ولا مدفوع % % 12(@)(@@) % إن يكن جاء خير باعث جوع % فسيلقاك خير قاتل جوع % % 13(@)(@@) % شكر الله ربه لك عنه % % خير صنع في مثله مصنوع % % 14(@)(@@) % لك نعمى عليه تخنع للحق % ق مقرا بها أشد الخنوع % 15(@)(@@) % جاء في الصيف فاغتدى وهو من ظل % لك بل من نداك كالمربوع % 16(@)(@@) % وقديما مددت ظلك في القي % % ظ عليه دون الحرور السفوع % 17(@)(@@) % ما عليه أن لا يرى فيه راء % آخر الدهر صوب غيث هموع % % 18(@)(@@) % قد كفاه ما يمتري منك فيه % % خوفك الله من ندى ودموع % % 19(@)(@@) % فابق حتى ترى لشهرك هذا % % ألف مثل بمثله مشفوع % % 20(@)(@@) % ناعم البال ذا عدو شقي % آمن السرب ذا عدو مروع % % PageV01P2674 21(@)(@@) % سالم النفس ثاوي الوفر لاتع % دم حال المرزوء لا المفجوع % 22(@)(@@) % متلفا مخلفا مفتيا مفيدا % جذم مال مستهلك مرجوع % 23(@)(@@) % لا مغبا ندى ولا مدد اليس % ر من الله عنك بالمقطوع % 24(@)(@@) % ممجدا منجدا كأنك عد % دائم السقي زاخر الينبوع % % 25(@)(@@) % ذا ثراء مبذر في العطايا % % دون عرض موفر مجموع % % 26(@)(@@) % لا تصون الأموال بل تقتنيهن % ن لصون الأحساب مثل الدروع % % 27(@)(@@) % في سرور من شيمة الشاكر الصا % % بر لا شيمة الفروح الجزوع % % 28(@)(@@) % يا بن يحيى لينزع المتعاطي % % ما تعاطاه فهو شهر نزوع % % 29(@)(@@) % إن من ظن أنه لك ند % لشبيه المصدق المخدوع % 30(@)(@@) % لا يقارعك يا بن يحي عن السؤ % % دد شيء فلست بالمقروع % PageV01P2675 31(@)(@@) % أنت أصل الأصول في الفضل والخي % % ر إذا حصلا وفرع الفروع % % 32(@)(@@) % لو تسامي بمجدك البدر والشم % % س إذا أوطآك خدي خضوع % PageV01P2676 البحر : - 1(@)(@@) % قل للألى حرموني إذ مدحتهم % إما الثواب وإما ردكم خلعي % % 2(@)(@@) % تالله لكن زينا في الندى لكم % عار علي بما أبديت من ضرعي % % 3(@)(@@) % فإن أبيتم علي الخلتين معا % فلا يلوم مليم ناله قذعي % % 4(@)(@@) % لا قاتل الله رب الناس لؤمكم % % بل قاتل الكاذب المكذوب من طمعي % % 5(@)(@@) % أما لئن كثرت في مدحكم بدعي % % لتكثرن غدا في شتمكم بدعي % % 6(@)(@@) % إني حمدتكم والذم حقكم % لما جعلتم إلى الرحمن منقطعي % % 7(@)(@@) % أديتموني فأحسنتم ببخسكم % حق الأديب فهذا حين متزعي % % 8(@)(@@) % ولو جدعت على أني مدحتكم % ما شانني شين مدحي فيكم جدعي % % 9(@)(@@) % ما جاء 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms612# من سوء بذري خبث ريعكم % عند ازدراعي بل من خبث مزدرعي % % PageV01P2677 البحر : - 1(@)(@@) % يا أبا المستهل حالفت جوعا % وخواء حتى تلذ الضريعا % % 2(@)(@@) % يا امرأ التيس يا حليف القوافي % % حلق الله رأسك المصفوعا % % 3(@)(@@) % سلحة في قفاك تنشق عنه % % ثم تبتد عارضيك جميعا % % PageV01P2678 البحر : - 1(@)(@@) % وهبت له عيني الهجوعا % % فأثابها منه الدموعا % % 2(@)(@@) % ظبي كأن بخصره % % من ضمره ظمأ وجوعا % % 3(@)(@@) % ومن البلية أنني % % علقت ممنوعا منوعا % % 4(@)(@@) % من سائل قمر الدجى % % ما باله ترك الطلوعا % % 5(@)(@@) % ويلي عليه بل على % % نفس أبت إلا خضوعا % % 6(@)(@@) % ما كنت قبل تعرضي % % لهواه أحسبني جزوعا % % PageV01P2679 البحر : - 1(@)(@@) % لئام كالخنازير % % خساس كاليرابيع % 2(@)(@@) % إذا ما امتدحوا قالوا % % وقعنا في النقاقيع % % 3(@)(@@) % رأيت المهدي الشعر % % إليهم فرط تضييع % % 4(@)(@@) % كمن دحرج در البح % % ر في بحر البلاليع % 5(@)(@@) % أشع عنهم خزاياهم % % وسمع كل تسميع % PageV01P2680 البحر : - 1(@)(@@) % طال المطال ولا خلود فحاجة % مقضية أو برد يأس ينقع % 2(@)(@@) % واعلم أني لا أسر بحاجة % إلا وفي عمري بها مستمتع % PageV01P2681 البحر : - 1(@)(@@) % تعممت إحصانا لرأسي برهة % من القر طورا والحرور إذا سفع % 2(@)(@@) % فلما دهى طول التعمم لمتي % % فأزرى بها بعد الجثالة والفرع % 3(@)(@@) % عزمت على لبس العمامة حيلة % لتستر ما جرت علي من الصلع % 4(@)(@@) % فيا لك من جان علي جناية % جعلت إليه من جنايته الفزع % % 5(@)(@@) % وأعجب بشيء كان دائي جعلته % % دوائي على عمد وأعجب بأن نفع % % PageV01P2682 البحر : - 1(@)(@@) % الأرض تنقص من أطرافها أبدا % لكن كنيزة طول الدهر تتسع % 2(@)(@@) % لها حر واسع لا شيء يشبعه % كحوت يونس مهما شاء يبتلع % 3(@)(@@) % تفسو لتقطع عنا نتن نكهتها % % عند الغناء ولكن ليس ينقطع % % 4(@)(@@) % وفي الفساء لعمر الله مقطعة % لكل نتن ولكن أمرها شنع % PageV01P2683 البحر : - 1(@)(@@) % أتتني عنك المؤيسات فلم ألم % وقلت سحاب جادني ثم أقلعا % % 2(@)(@@) % فلا يبعد الله السحاب وصوبه % ولا أعصفت ريح لكي يتقشعا % % 3(@)(@@) % هو الغيث يسقي بلدة بعد بلدة % من الأرض حتى يسقي الأرض أجمعا % % 4(@)(@@) % وليس بمبعوث لينصف مرتعا % فيرضيه السقيا ويظلم مرتعا % % 5(@)(@@) % وما ضرني من نافع أن يضرني % % وذاك لحبي أن يضر وتنفعا % % 6(@)(@@) % رضيت بما ترضى فإن شئت مرة % سواه فلا استنشقت إلا بأجدعا % % 7(@)(@@) % ولا خير لي فيما 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms613# أحب وتجتوي % % لأنك من قلبي كنفسي موقعا % % 8(@)(@@) % على أنك الشيء الذي لا أرى له % % مثالا سوى الشمس المنيرة مطلعا % % 9(@)(@@) % لك المثل الأعلى على الناس كلهم % % وإن غيظت الأكباد حتى تصدعا % % 10(@)(@@) % خضعت فإن خلت الخضوع خديعة % فما زلت خداعا وزلت مخدعا % % PageV01P2684 11(@)(@@) % على أنك المذكي على كل خطة % تضمنتها قلبا من الجمر أصنعا % % 12(@)(@@) % وأنك من ساس الأمور بحكمة % فما ريم ما أحمى ولا ضيم ما رعى % % 13(@)(@@) % ذكاء فتاء لا تجاريب كبرة % ترى الغيب عنه حاسرا لا مقنعا % % 14(@)(@@) % ولكنك المخدوع صفحا ونائلا % فتصفح وضاحا وتمنح أروعا % % 15(@)(@@) % ولا أنا من جدوى يديك بآيس % وإن هول الظن الكذوب وشنعا % % 16(@)(@@) % فإن كنت من جدواك لا بد مانعي % % فلا تمنعني أن أقول وتسمعا % % 17(@)(@@) % ولا تحميني أن أراك مطالعا % إذا كادت الأحشاء أن تتطلعا % % 18(@)(@@) % ومتعت بالعمر الطويل محكما % ولا زلت بالإنصاف منك ممتعا % % PageV01P2685 البحر : - 1(@)(@@) % عيد يطابق أول الأسبوع % % وقعت به الأقدار خير وقوع % 2(@)(@@) % للفأل بالإقبال فيه شاهد % عدل الشهادة ليس بالمدفوع % 3(@)(@@) % غابت نجوم النحس عنه وأصبحت % فيه نجوم السعد ذات طلوع % 4(@)(@@) % وأظله جود الأمير وقد ذكت % نار المصيف فظل كالمربوع % % 5(@)(@@) % يا أيها الملك الذي نهضت به % % للمجد خير محاتد وفروع % 6(@)(@@) % أنعم صباحا نعمة موصولة % بعرى نعيم ليس بالمقطوع % 7(@)(@@) % وافتح بعيدك ألف عيد بعده % % ألف برغم عدوك المقموع % % 8(@)(@@) % ولك الوفور فإن رزئت رزيئة % فرزيئة المرزوء لا المفجوع % % 9(@)(@@) % نفحات كفي ماجد متخادع % % عنهن للسؤال لا المخدوع % 10(@)(@@) % متلاف أموال صناعة كفه % % تفريق كل مؤثل مجموع % % PageV01P2686 11(@)(@@) % ما زال يبذلها ويعلم أنها % % لمقاتل الأعراض خير دروع % 12(@)(@@) % واها لمسلمها إذا هي أسلمت % من مانع للمحرم الممنوع % % 13(@)(@@) % جنن يقين إذا سلبن وما وقى % % عرض الكريم كملبس مخلوع % % 14(@)(@@) % يا رب ذي حسد يود لك الردى % % ولأنت واضع إصره الموضوع % 15(@)(@@) % لولاك مارس كل خطب مضلع % % يحمي جفون العين كل هجوع % 16(@)(@@) % إذ لا يكون لذي المراس غناؤه % إلا الدموع يحثها بدموع % % 17(@)(@@) % أخليت من تلك الهموم ضلوعه % % فشحنت بالشحناء شر ضلوع % % 18(@)(@@) % وغدا يود لك التي لو نالها % % ريم الصغار بمعطس مجدوع % 19(@)(@@) % وجبت جنوب عداك إن جنوبهم % % أولى الجنوب بوجبة 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms614# المصروع % 20(@)(@@) % بدلا من القربان عنك وإن غدا % % قربان سوء ليس بالمرفوع % % PageV01P2687 21(@)(@@) % وكفاهم شرفا لهم وصيانة % عن شقوة ومذلة وخضوع % % 22(@)(@@) % إن يقتلوا دون الأمير فدى له % % ومن المكاره نافع المرجوع % % 23(@)(@@) % أوليس موت الحاسديك وإن مضوا % % وبهم غليل ليس بالمنقوع % % 24(@)(@@) % خيرا لهم من أن يروا بك حادثا % مستشنع المرئي والمسموع % % 25(@)(@@) % لا كان ذاك فلو رأوه لأصبحوا % % حلفاء خوف لا ينام وجوع % % 26(@)(@@) % ووهت أمورهم هناك فعالجوا % % من وهيها ما ليس بالمرقوع % % 27(@)(@@) % وعلت وجوههم التي بيضتها % % قترات ذل قامع وخشوع % % 28(@)(@@) % فبكوا على الجبل الذي كان الذرى % % من هيج كل ملمة زعزوع % 29(@)(@@) % لا أخروا ليقدموك وقدموا % % برضى صبور أو بسخط جزوع % 30(@)(@@) % يا آل طاهر المطهر كاسمه % % كم فيكم للخير من ينبوع % % PageV01P2688 31(@)(@@) % ينبوع معروف ورأي ناجع % في معضل الأدواء أي نجوع % 32(@)(@@) % لم يخل نائله ولا آراؤه % % من سد خلات ورأب صدوع % 33(@)(@@) % آراء داهية بعيد غوره % ولهى قريب مستقاه نزوع % % 34(@)(@@) % منكم عبيد الله وتر زمانه % % ولرب وتر ليس بالمشفوع % % 35(@)(@@) % طلاع كل ثنية في باذخ % صعب المراتب ليس بالمطلوع % % 36(@)(@@) % وعلى يديه جرى صلاح شؤونكم % ورجوع إرث أبيكم المنزوع % % 37(@)(@@) % أثنت فضائله عليه من ندى % % يغشى العفاة ومن حجى مطبوع % % 38(@)(@@) % وتقى هلوع من وعيد إلهه % % من نائبات الدهر غير هلوع % % 39(@)(@@) % وفضائل أخر سواها لاترى % % في تابع أبدا ولا متبوع % % 40(@)(@@) % حتى استمال من العدو مودة % ما ألقيت لمقدر في روع % % PageV01P2689 41(@)(@@) % فتقبلوا لطف الإله وصنعه % % بقبول ملطوف له مصنوع % % 42(@)(@@) % ولقد أمرت بذاك منكم معشرا % خنعوا بشكر الله أي خنوع % % 43(@)(@@) % رجعت حقوقكم رجوع نزائع % نزعت إلى وطن أشد نزوع % % 44(@)(@@) % فرعيتموها رعية محمودة % معدومة المهزول والمسبوع % % 45(@)(@@) % وكفيتمونا ما أهم فكلنا % % يرعى مريع العيش غير مروع % % 46(@)(@@) % فجريتم جري النسيم بسحرة % منا ومجرى البارد المجروع % % PageV01P2690 البحر : - 1(@)(@@) % أبا الصقر من يشفع إليك بشافع % فمالي سوى شعري وجودك شافع % 2(@)(@@) % وجودك يكفي دون كل ذريعة % إذا لم تكن للطالبين ذرائع % 3(@)(@@) % أتيتك في عرض مصون طويته % % ثلاثين عاما فهو أبيض ناصع % 4(@)(@@) % ومثلك من لم يلق في ثوب بذلة % ولا ملبس قد دنسته المطامع % % 5(@)(@@) % وحلأت نفسي عن شرائع جمة % لترويني مما 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms615# لديك الشرائع % % 6(@)(@@) % وأنت الذي نادى المولين جوده % ودلت عليه الراغبين الصنائع % % 7(@)(@@) % وما قادني ظن إليك مشبه % ولكن يقين ثاقب النور ساطع % % 8(@)(@@) % فإن تفعل الحسنى فشكري راهن % % وإن تكن الأخرى فعذري واسع % % PageV01P2691 البحر : - 1(@)(@@) % ليهنك حق رده الله منعما % عليك به لا بل على الناس أجمعا % % 2(@)(@@) % ولاية بغداد التي بك أذعنت % لراكبها حتى أخب وأوضعا % % 3(@)(@@) % ولو لم تذللها له وهي صعبة % تشمس منها ظهرها وتمنعا % % 4(@)(@@) % وليت فوليت البلاد وأهلها % % صنائع لم تترك لغيرك مصنعا % % 5(@)(@@) % فعش سامي العرنين عيش محسد % ولا عطس الحساد إلا بأجدعا % % 6(@)(@@) % وعذري من التقصير في القول أنني % % حسير سقام عض جسمي فأوجعا % % 7(@)(@@) % وإني لبالمرصاد للقول بعدها % % إن الله عافاني وما زلت مصقعا % % PageV01P2692 البحر : - 1(@)(@@) % لهان على سليمى كم قتيل % يغادر في المكر وكم صريع % % 2(@)(@@) % إذا ما استبدلت ملكا بملك % وأمرع حيث ما نزلت ربيع % 3(@)(@@) % فأولى يا بني العباس أولى % % لكم منه وأمركم جميع % 4(@)(@@) % أراه يضيع ثغرا بعد ثغر % وذلك في فسادكم سريع % 5(@)(@@) % وليس بقوة الأعداء ذاكم % % ولكن عظم صاحبكم خريع % 6(@)(@@) % ترى العمل الجسيم إذا تولى % % سياسته كعبد يستبيع % % 7(@)(@@) % فإن هو بيع من أمم عليه % % وإلا فالإباق له شفيع % % 8(@)(@@) % يقول إذا عصته بلاد قوم % فجاوزها إلى أخرى تطيع % % 9(@)(@@) % إذا لم تستطع شيئا فدعه % وجاوزه إلى ما تستطيع % % PageV01P2693 البحر : - 1(@)(@@) % ولما أجمعوا بينا وشدت % حدوجهم بأثناء النسوع % 2(@)(@@) % وشجعنا على التوديع شوق % تحرق بين أثناء الضلوع % 3(@)(@@) % تلاقينا لقاء لافتراق % كلانا منه ذو قلب مروع % % 4(@)(@@) % فما افترت شفاه عن ثغور % بل افترت جفون عن دموع % % PageV01P2694 البحر : - 1(@)(@@) % من كان يبكي الشباب من جزع % % فلست أبكي عليه من جزع % 2(@)(@@) % لأن وجهي بقبح صورته % % ما زال لي كالمشيب والصلع % 3(@)(@@) % أشب ما كنت قط أهرم ما % % كنت فسبحان خالق البدع % 4(@)(@@) % إذا أخذت المرآة أسلفني % % وجهي وما مت هول مطلعي % % 5(@)(@@) % شغفت بالخرد الحسان وما % % يصلح وجهي إلا لذي ورع % % 6(@)(@@) % كي يعبد الله في الفلاة ولا % % يشهد فيه مشاهد الجمع % % PageV01P2695 البحر : - 1(@)(@@) % توهمت قد سوفت بالغوث راجيا % لغوثك لا بل طالبا يتضرع % 2(@)(@@) % وقد سبقت كفيك كفا مماجد % أتسلو عن المعروف أم تتوجع 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms616# % 3(@)(@@) % نوالك يابن الأكرمين مناهزا % به فرصا قد أمكنت فهي شرع % 4(@)(@@) % ولا يرينك اليوم تدفع حقه % % إلى غده وانظر غدا كيف تصنع % 5(@)(@@) % هنالك لا أرضى بشيء سوى الغنى % % إذا الدهر أعطاك الذي كان يمنع % % 6(@)(@@) % ألم تر أن المطل عند ذوي الحجا % % رياضة وغد شيمة لا تطوع % % 7(@)(@@) % يخادعها عن فضلها وهي خبة % ويؤنسها بالمعتفى وهي تفزع % % 8(@)(@@) % وأنت فتى فتيان أهل زمانه % % وبارعهم طولا فلم لا تبرع % 9(@)(@@) % تخادع حيات الرجال فتعتلي % % وتسأل ما فوق السؤال فتخدع % 10(@)(@@) % فبادر أكفا يبتدرن إلى العلا % % وغاير عيونا نحوها تتطلع % % PageV01P2696 11(@)(@@) % ولا تشجين السائلين بمطلهم % % فتشكي وتعطي والعطاء مضيع % % 12(@)(@@) % ولست إذا قطعت نفسا بجامع % تفاريقها من بعد ما تتقطع % % 13(@)(@@) % كأني إذا استهللت بين قوابلي % % بدا لي ما ألقى ببابك أجمع % % PageV01P2697 البحر : - 1(@)(@@) % شمري نحو العطاء المنتجع % واستدلي بالثناء المستمع % 2(@)(@@) % رجع الملك جديدا كالذي % % كان في بدأته حين طلع % 3(@)(@@) % دولة سببها ذو كنية % وسم الملك بها وهو جذع % % 4(@)(@@) % كنية السفاح أهداها له % % مع ميراث النبي المتبع % 5(@)(@@) % ولقد كنيها من بعده % % معشر لم يلبسوا تلك الخلع % % 6(@)(@@) % أو كسوها فأساءوا لبسها % % بالتعري من سرابيل الورع % % PageV01P2698 البحر : - 1(@)(@@) % ولست مقارعا جيشا ولكن % % برأيي يستضيء ذوو القراع % 2(@)(@@) % وإني للقوي على المعالي % % وما أنا بالقوي على الصراع % PageV01P2699 البحر : - 1(@)(@@) % قالوا هجاك أبو حفص فقلت لهم % % لا شب قرن أبي حفص ولا زرعا % % 2(@)(@@) % لئن هجاني وفرط الجهل أوقعه % % لقد تزوج أيضا بعدما صلعا % % 3(@)(@@) % قد قلت إذ قيل قد زفت حليلته % % صبرا كأني بقرن الشيخ قد طلعا % % 4(@)(@@) % طلقتها منه إن عفت له أبدا % ما أبصرت منه ذاك المنظر الشنعا % % 5(@)(@@) % أقبح بوجه أبي حفص وعفتها % % هذان شيئان لا والله لا اجتمعا % % PageV01P2700 البحر : - 1(@)(@@) % لخالد بيت سوء مثل ساكنه % بلعنة الله محفوف الترابيع % 2(@)(@@) % يأوي إليه نسيات له مجن % سلين بالفسق هم العرى والجوع % 3(@)(@@) % من كل بيضاء ما في وصلها طمع % لطامع بل رجاء غير مقطوع % % 4(@)(@@) % لا يتقين بأيديهن مس يد % لكن بأرجل سمحات مطاويع % % PageV01P2701 البحر : - 1(@)(@@) % بكيت فلم تترك لعينك مدمعا % زمانا طوى شرخ الشباب فودعا % % 2(@)(@@) % سقى الله أوطارا لنا ومآربا % تقطع من أقرانها 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms617# ما تقطعا % % 3(@)(@@) % ليالي تنسيني الليالي حسابها % % بلهنية أقضي بها الحول أجمعا % % 4(@)(@@) % سدى غرة لا أعرف اليوم باسمه % % وأعمل فيه اللهو مرأى ومسمعا % % 5(@)(@@) % إذ ما قضيت اليوم لم أبك عهده % % وأخلفت أدنى منه ظلا وأفنعا % % 6(@)(@@) % فأصبحت أقتص العهود التي خلت % بآهة محقوق بأن يتفجعا % % 7(@)(@@) % أحن فأستسقي لها الغيث مرة % وأثني فأستسقي لها العين أدمعا % % 8(@)(@@) % لأحسنت الأيام بيني وبينها % % بديئا وإن عفت على ذاك مرجعا % % 9(@)(@@) % أعاذل أن أعطي الزمان عنانه % % فقد كنت أثني منه رأسا وأخدعا % % 10(@)(@@) % ليالي لو نازعته رجع أمسه % % ثنى جيده طوعا إلي ليرجعا % % PageV01P2702 11(@)(@@) % وقد أغتدي للطير والطير هجع % ولو أوجست مغداي ما بتن هجعا % % 12(@)(@@) % بخلين تما بي ثلاثة إخوة % جسومهم شتى وأرواحهم معا % % 13(@)(@@) % بني خلة لم يفسد المحل بينهم % ولا طمع الواشون في ذاك مطمعا % % 14(@)(@@) % مطيعين أهواء توافت على هوى % فلو أرسلت كالنبل لم تعد موقعا % % 15(@)(@@) % تجلي عيون الناظرين فجاءة % لنا منظرا مروى من الحسن مشبعا % % 16(@)(@@) % إذا ما رفعنا مقبلين لمجلس % % طلعنا جميعا لا نغادر مطلعا % % 17(@)(@@) % كمنطقة الجوزاء لاحت بسحرة % بعقب غمام لائح ثم أقشعا % % 18(@)(@@) % إذا ما دعا منه خليل خليله % % بأفديك لباه مجيبا فأسرعا % % 19(@)(@@) % وإن هو ناداه سحيرا لدلجة % تنبه نبهان الفؤاد سرعرعا % % 20(@)(@@) % كأن له في كل عضو ومفصل % وجارحة قلبا من الجمر أصمعا % % PageV01P2703 21(@)(@@) % فشمر للإدلاج حتى كأنما % % تلف به الأرواح سمعا سمعمعا % % 22(@)(@@) % كأني ما روحت صحبي عشية % % نساجل مخضر الجنابين مترعا % % 23(@)(@@) % إذا رنقت شمس الأصيل ونفضت % على الأفق الغربي ورسا مذعذعا % % 24(@)(@@) % وودعت الدنيا لتقضي نحبها % % وشول باقي عمرها فتشعشعا % % 25(@)(@@) % ولاحظت النوار وهي مريضة % وقد وضعت خدا إلى الأرض أضرعا % % 26(@)(@@) % كما لاحظت عواده عين مدنف % توجع من أوصابه ما توجعا % % 27(@)(@@) % وظلت عيون النور تخضل بالندى % % كما اغرورقت عين الشجي لتدمعا % % 28(@)(@@) % يراعينها صورا إليها روانيا % ويلحظن ألحاظا من الشجو خشعا % % 29(@)(@@) % وبين إغضاء الفراق عليهما % % كأنهما خلا صفاء تودعا % % 30(@)(@@) % وقد ضربت في خضرة الروض صفرة % من الشمس فاخضر اخضرارا مشعشعا % % PageV01P2704 31(@)(@@) % وأذكى نسيم الروض ريعان ظله % % وغنى مغني الطير فيه فسجعا % % 32(@)(@@) % وغرد ربعي الذباب خلاله % % كما حثحث النشوان صنجا مشرعا % % 33(@)(@@) % فكانت 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms618# أرانين الذباب هناكم % على شدوات الطير ضربا موقعا % % 34(@)(@@) % وفاضت أحاديث الفكاهات بيننا % % كأحسن ما فاض الحديث وأمتعا % % 35(@)(@@) % كأن جفوني لم تبت ذات ليلة % كراها قذاها لا تلائم مضجعا % % 36(@)(@@) % كأني ما نبهت صحبي لشأنهم % % إذا ما ابن آوى آخر الليل وعوعا % % 37(@)(@@) % فثاروا إلى آلاتهم فتقلدوا % % خرائط حمرا تحمل السم منقعا % % 38(@)(@@) % منمقة ما استودع القوم مثلها % % ودائعهم إلا لكي لا تضيعا % % 39(@)(@@) % محملة زادا خفيفا مناطه % من البندق الموزون قل وأقنعا % % 40(@)(@@) % نكير لئن كانت ودائع مثلها % % حقائب أمثالي ويذهبن ضيعا % % PageV01P2705 41(@)(@@) % علام إذا توهي الحمالة عاتقي % % وكان مصونا أن يذال مودعا % % 42(@)(@@) % وما جشمتني الطير ما أنا جاشم % بأسبابها إلا ليجشمن مضلعا % % 43(@)(@@) % فلله عينا من رآهم وفد غدوا % % مزبين مشهورا من الزي أروعا % % 44(@)(@@) % إذا نبضوا أوتارهم فتجاوبت % لها زفرات تصرع الطير خولعا % % 45(@)(@@) % كأن دوي النحل أحرى دويها % % إذا ما حفيف الريح أوعاه مسمعا % % 46(@)(@@) % هنالك تغدو الطير ترتاد مصرعا % وحسبانها المكذوب يرتاد مرتعا % % 47(@)(@@) % ولله عينا من رآهم إذا انتهوا % % إلى موقف المرمى فأقبلن نزعا % % 48(@)(@@) % وقد وقفوا للحائنات وشمروا % % لهن إلى الأنصاف سوقا وأذرعا % % 49(@)(@@) % وظلوا كأن الريح تزفي عليهم % بها قزعا ملء السماء مقزعا % % 50(@)(@@) % وقد أغلقوا عقد الثلاثين منهم % بمجدولة الأقفاء جدلا موشعا % % PageV01P2706 51(@)(@@) % وجدت قسي القوم في الطير جدها % % فظلت سجودا للرماة وركعا % % 52(@)(@@) % هنالك تلقى الطير ما طيرت به % % على كل شعب جامع فتصدعا % % 53(@)(@@) % وتعقب بالبين الذي برحت به % % لكل محب كان منها مروعا % % 54(@)(@@) % فظل صحابي ناعمين ببؤسها % % وظلت على حوض المنية شرعا % % 55(@)(@@) % فلو أبصرت عيناك يوما مقامنا % % رأيت له من حلة الطير أمرعا % % 56(@)(@@) % طرائح من سود بيض نواصع % تخال أديم الأرض منهن أبقعا % % 57(@)(@@) % نؤلف منها بين شتى وإنما % % نشتت من ألافها ما تجمعا % % 58(@)(@@) % فكم ظاعن منهن مزمع رحلة % قصرنا نواه دون ما كان أزمعا % % 59(@)(@@) % وكم قادم منهن مرتاد منزل % % أناخ به منا منيخ فجعجعا % % 60(@)(@@) % كأن لباب التبر عند انتضائها % % جرى ماؤه في ليطها فتريعا % % PageV01P2707 61(@)(@@) % تراك إذا ألقيت عنها بناتها % % سفرت به عن وجه عذراء برقعا % % 62(@)(@@) % كأن قراها والفروز التي به % % وإن لم تجدها العين إلا تتبعا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms619# % % 63(@)(@@) % مزر سحيق الورس فوق صلاءة % أدب عليها دارج الذر أكرعا % % 64(@)(@@) % لها أول طوع اليدين وآخر % إذا سمته الإغراق فيها تمنعا % % 65(@)(@@) % تدين لمقرون أمرت مريره % عجوز صناع لم تدع فيه مصنعا % % 66(@)(@@) % تأيت صميم المتن حتى إذا انتهى % % رضاها أمرته مرائر أربعا % % 67(@)(@@) % تلذ قرينيه عقود كأنها % % رؤوس مدارى ما أشد وأوكعا % % 68(@)(@@) % ولا عيب فيها غير أن نذيرها % % يروع قلوب الطير حتى تصعصعا % % 69(@)(@@) % على أنها مكفولة الرزق ثقفة % وإن راع منها ما يروع وأفزعا % % 70(@)(@@) % متاح لراميها الرمايا كأنما % % دعاها له داعي المنايا فأسمعا % % PageV01P2708 71(@)(@@) % تؤوب بها قد أمتعتك وغادرت % من الطير مفجوعا به ومفجعا % % 72(@)(@@) % لها عولة أولى بها ما تصيبه % % وأجدر بالإعوال من كان موجعا % % 73(@)(@@) % وما ذاك إلا زجرها لبناتها % % مخافة أن يذهبن في الجو ضيعا % % 74(@)(@@) % فيخرجن حينا حائنا ما انتحينه % % وإن تخذ التسبيح منهن مفزعا % % 75(@)(@@) % تقلب نحو الطير عينا بصيرة % كعينك بل أذكى ذكاء وأسرعا % % 76(@)(@@) % مربعة مقسومة بشباكها % % كتمثال بيت الوشي حيك مربعا % % 77(@)(@@) % لإبدائها في الجو عند طحيرها % % عجاريف لو مرت بطود تزعزعا % % 78(@)(@@) % تقاذف عنها كل ملساء حدرة % تمر مرورا بالقضاء مشيعا % % 79(@)(@@) % أمون من العظعاظ عند مروقها % % وإن عارضتها الريح نكباء زعزعا % % 80(@)(@@) % يحاذرها العفريت عند انصلاتها % % فيعجله الإشفاق أن يتسمعا % % PageV01P2709 81(@)(@@) % تقول إذا راع الرمي حفيفها % % رويدك لا تجزع من الموت مجزعا % % 82(@)(@@) % فإن أخطأته استوهلته لأختها % % فتلحقه الأخرى مروعا مفزعا % % 83(@)(@@) % وإن ثقفته أنفذته وقدرت % له ما يوازيه من الأرض مصرعا % % 84(@)(@@) % فيقضي المذكي في الصريع قضاءه % وهاتيك يأبى غربها أن تورعا % % 85(@)(@@) % أتت ما أتت من كيدها ثم صممت % % تدر دريرا يخطف الطير ميلعا % % 86(@)(@@) % كأن بنات الماء في صرح متنه % % إذا ما علا روق الضحى فترفعا % % 87(@)(@@) % زاربي كسرى بثها في صحانه % % ليحضر وفدا أو ليجمع مجمعا % % 88(@)(@@) % تريك ربيعا في خريف وروضة % على لجة بدعا من الأمر مبدعا % % 89(@)(@@) % تخايل فوق الماء زهوا كما زهت % % عوائد عيد ما ائتلين تصنعا % % 90(@)(@@) % تلبس أصنافا من البز خلعة % % حريرا وديباجا وريطا مقطعا % % PageV01P2710 91(@)(@@) % فبين خيابوذ زهته شياته % % فزينه ريش تراه موزعا % % 92(@)(@@) % يمد إليه حسنه وجماله % خلال بنات الماء عينا وإصبعا % % 93(@)(@@) % وأخضر كالطاووس 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms620# يحسب رأسه % بخضراء من حر الحرير مقنعا % % 94(@)(@@) % يتيه بمنقار عليه حبائل % تخيلن في ضاحيه جزعا مجزعا % % 95(@)(@@) % يلوح على إسطامه وشي صفرة % ترقش منها متنه فتلمعا % % 96(@)(@@) % كملعقة الصيني أخدمها يدا % صناعا وإن كانت يد الله أصنعا % % 97(@)(@@) % وعينين حمراوين يطرف عنهما % % كأن حجاجيه بفصين رصعا % % 98(@)(@@) % ومن أعقف أحذاه منقاره اسمه % % أضد بديع الخلق فيه فأبدعا % % 99(@)(@@) % مزين بسربال من الريش ناصع % له زبرج يحكي الثغام المترعا % % 100(@)(@@) % مشين بجيد ذي سواد وزعرة % ورأس شبيه الجيد أسود أقرعا % % PageV01P2711 101(@)(@@) % مطرف أطراف الجناح كأنه % % بنان عروس بالخضاب تقمعا % % PageV01P2712 البحر : - 1(@)(@@) % إذا ما شنطف نكهت أماتت % فمن ندمائها قتلى وصرعى % % 2(@)(@@) % لها وجه رأيت البط فيه % % كشق عجانها والدود يسعى % % 3(@)(@@) % يلاقي الأنف من فمها عذابا % وترى العين فيه شر مرعى % % 4(@)(@@) % وإن سكوتها عندي لبشرى % % وإن غناءها عندي لمنعى % % 5(@)(@@) % فقرطها بعقرب شهرزور % إذا غنت وطوقها بأفعى % % 6(@)(@@) % ودعها حيث لا تسعى وترعى % % حماها الله أن تسقى وترعى % % 7(@)(@@) % فإن جاءت فلا أهلا وسهلا % وإن ذهبت فلا حفظا ورجعى % % 8(@)(@@) % ولا رزقت شفاء من غليل % إذا بركت لنائكها وأقعى % % PageV01P2713 البحر : - 1(@)(@@) % أيا شجرات الله ليس بقاطع % لك الدهر شربا أنت فيه شوارع % 2(@)(@@) % تحير دفاع من الماء خلفه % % لسقياك دفاع له متدافع % 3(@)(@@) % إذا قدر الجهال وشك انقطاعه % % أتى مدد من ربه متتابع % 4(@)(@@) % فلا يرتجي الأعداء فيكم رجاءهم % % فليس لغرس الله ذي العرش قالع % 5(@)(@@) % ولا يطمع الحساد في قطع شربكم % % فليس لما أجرت يد الله قاطع % % 6(@)(@@) % يد الله درع لا تزال تقيكم % وترس لكم ترفض عنه القوارع % 7(@)(@@) % وليست على ما يحفظ الله ضيعة % ولكن ما لا يحفظ الله ضائع % % 8(@)(@@) % تعيشون ما عشتم وللحبل واصل % تقوم به الدنيا وللشمل جامع % % 9(@)(@@) % وللدين أنصار وللملك شيعة % وللعرف معطاء وللجار مانع % % 10(@)(@@) % وما تتقذاكم عيون جلية % ولا تلفظ التقريظ فيكم مسامع % % PageV01P2714 البحر : - 1(@)(@@) % تتجافى جنوبهم % عن وطىء المضاجع % 2(@)(@@) % كلهم بين خائف % مستجير وطامع % 3(@)(@@) % تركوا لذة الكرى % % للعيون الهواجع % 4(@)(@@) % ورعوا أنجم الدجى % % طالعا بعد طالع % % 5(@)(@@) % لو تراهم إذا هم % خطروا بالأصابع % % 6(@)(@@) % وإذا هم تأوهوا % % عند مر القوارع % % 7(@)(@@) % وإذا باشروا الثرى % % بالخدود الضوارع % % 8(@)(@@) % واستهلت عيونهم % % فائضات 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms621# المدامع % % 9(@)(@@) % ودعوا يا مليكنا % % يا جميل الصنائع % 10(@)(@@) % أعف عنا ذنوبنا % % للوجوه الخواشع % PageV01P2715 11(@)(@@) % أعف عنا ذنوبنا % % للعيون الدوامع % % 12(@)(@@) % أنت إن لم يكن لنا % % شافع خير شافع % % 13(@)(@@) % فأجيبوا إجابة % لم تقع في المسامع % % 14(@)(@@) % ليس ما تصنعونه % % أوليائي بضائع % % 15(@)(@@) % تاجروني بطاعتي % % تربحوا في البضائع % % 16(@)(@@) % وآبذلوا لي نفوسكم % % إنها في ودائعي % % PageV01P2716 البحر : - 1(@)(@@) % كل الهدايا قد رأيت صنوفها % % إلا الكلام ففيه ما لم يسمع % % 2(@)(@@) % فجعلت إهدائي إليك مدائحا % مثل الرياض من الكلام المبدع % PageV01P2717 البحر : - 1(@)(@@) % كل شيء أهديه غير بديع % لك عندي إلا اعتذارا بديعا % % 2(@)(@@) % أي شيء أهدي إليك وفي وج % % هك ما تشتهي النفوس جميعا % % 3(@)(@@) % منك تهدي الدنيا إلينا الهدايا % % فيباري بها خريف ربيعا % % PageV01P2718 البحر : - 1(@)(@@) % حسام لا يليق عليه جفن % سريع في ضريبته ذريع % 2(@)(@@) % ترى وقعاته أبدا خطايا % % إلى أن يسبطر له صريع % 3(@)(@@) % ويرعد متنه من غير هز % كريعان السراب زهاه ريع % 4(@)(@@) % يقول القائلون إذا رأوه % % لأمر ما تغوليت الدروع % % PageV01P2719 البحر : - 1(@)(@@) % عجبت لعمر الله من جار جارة % لعرسك محمود إذا الضيف ودعه % % 2(@)(@@) % وإن كان يلقاه بأجهم طلعة % وينزله في غير رحب ولا سعه % PageV01P2720 البحر : - 1(@)(@@) % لطرفها وهو مصروف كموقعه % في القلب حين يروع القلب موقعه % 2(@)(@@) % تصد بالطرف لا كالسهم تصرفه % عني ولكنه كالسهم تنزعه % 3(@)(@@) % ونزعها السهم من قلبي كموقعه % % فيه وكل أليم المس موجعه % PageV01P2721 البحر : - 1(@)(@@) % سأقسم دمعي إذ غدرت فدمعة % على مدح سيرتها فيك ضيع % 2(@)(@@) % وأخرى على مافيك من حسن منظر % غدوت وقد أصحبته قبح مسمع % 3(@)(@@) % وأخرى على رأي أصبت برشده % فضل وأداني إلى شر مطمع % % 4(@)(@@) % وأخرى على جد سعيد يصونني % % وحسبك أن أبكيت حرا بأربع % % PageV01P2722 البحر : - 1(@)(@@) % يا أبا سهل نثاك المستمع % ونداك المرتجى والمنتجع % 2(@)(@@) % ولك النعمة لا أجحدها % % ما بدا ضوء نهار فسطع % 3(@)(@@) % غير أني بعد هذا قائل % % قول ذي ود ونصح إن نفع % 4(@)(@@) % لك عرض ليس من عاداته % % أن يرى فيه من الذم طبع % 5(@)(@@) % وقليل الرين فيه بين % وكذا العرض إذا العرض نصع % % 6(@)(@@) % والأخ المخلص إن أقذيته % % فالقذى فيك إلى أن ينتزع % % 7(@)(@@) % وأنا الخل الذي استخلصته % % فرأى موضع نصح فصدع % % 8(@)(@@) % ليس يرضى ماجد من 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms622# نفسه % بنوال كل يوم يرتجع % 9(@)(@@) % لك جار كلما قلت جرى % % فتشوقت له قيل انقطع % 10(@)(@@) % فرح ينتج منه ترح % % وأمان يجتنى منه فزع % PageV01P2723 11(@)(@@) % كل يوم لي منه روعة % % وفعال الحر أولى بالروع % % 12(@)(@@) % لا تكن كالدهر في أفعاله % % كلما أعطى عطاياه فجع % % 13(@)(@@) % ليس لي عندك حق غير ما % % تتقاضاه المعالي والرفع % % 14(@)(@@) % والذي يحكم فيه بيننا % % كرم منك وجود قد بدع % % 15(@)(@@) % وأرى الشافع في تعجيله % % قد تراخى بعدما كان شفع % 16(@)(@@) % لا أحب الرزق يجري أمره % كلما أملته مجرى المتع % % 17(@)(@@) % أوثق العقدة إن أنكحتني % % ما تراني كفأه أو لا فدع % 18(@)(@@) % جد بإدرارك ما أجريته % أو بإعتاقي من رق الطمع % % 19(@)(@@) % وجواد ناكث قلت له % % بعدما قفى العطايا بالرجع % % 20(@)(@@) % لا تخادع في متاع زائل % فكأن قد طار منه ما وقع % % PageV01P2724 21(@)(@@) % حسب من خادع في معروفه % أن ما صح من الدنيا خدع % % 22(@)(@@) % إنما ضيع مثر ما اقتنى % % واقتنى غير كذاب ما اصطنع % 23(@)(@@) % ليت شعري آملال جره % % حين ساهرتك طول المجتمع % 24(@)(@@) % أم عوار فاحش مني بدا % % وخلال الخير والشر لمع % 25(@)(@@) % ذاك أم هذا دهاني في الذي % % كنت أرجوه فأجلى وانقشع % % PageV01P2725 البحر : - 1(@)(@@) % أحسن ما كان الدقيق موقعا % % من رجل أفلس حتى أدقعا % % 2(@)(@@) % إذا أتى يسعى حثيثا مسرعا % % من بعد ما مس الغلاء الأشنعا % % 3(@)(@@) % ولحق السبعين أو ترفعا % % عن ذاك لا يرحم من تضرعا % % 4(@)(@@) % ومد ذو العيلة فيه الإصبعا % % يشكو إلى الله ويمري المدمعا % % 5(@)(@@) % وأصبح القوم البطان جوعا % % وخشي الجائع أن لا يشبعا % % 6(@)(@@) % يا من تناهى منظرا ومسمعا % % جمال وجه وثناء أروعا % % 7(@)(@@) % أفزعني الدهر فكن لي مفزعا % % فكم تسمحت وكم تمنعا % % 8(@)(@@) % وكم تحسنت وكم تشنعا % % ولم يزل فضلك فيه مرتعا % % 9(@)(@@) % للمقحطين الممحلين ممرعا % % وكبر ظني أن تقول مسمعا % % 10(@)(@@) % لبيك لبيك لعا ودعدعا % % بدلت من بؤسك عيشا خروعا % % PageV01P2726 11(@)(@@) % يشهد أني حافظ من ضيعا % % PageV01P2727 البحر : - 1(@)(@@) % ولي أصدقاء كثيرو السلا % % م علي وما فيهم نافع % 2(@)(@@) % إذا أنا أدلجت في حاجة % لها مطلب نازح شاسع % 3(@)(@@) % فلي أبدا معهم وقفة % وتسليمة وقتها ضائع % 4(@)(@@) % وفي موقف المرء عن حاجة % % تيممها شاغل قاطع % % 5(@)(@@) % ترى كل غث كثير 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms623# الفضو % % ل مصحفه مصحف جامع % % 6(@)(@@) % يقول الضمير له طالعا % ألا قبح الرجل الطالع % % 7(@)(@@) % يحدثني من أحاديثه % % بما لا يلذ به السامع % % 8(@)(@@) % أحاديث هن كمثل الضري % % ع آكله أبدا جائع % 9(@)(@@) % غدوت وفي الوقت لي فسحة % فضاق بي المنهل الواسع % 10(@)(@@) % تقدمت فاعتافني أسره % إلى أن تقدمني التابع % % PageV01P2728 11(@)(@@) % وفاتت بلقيانه حاجتي % % ألا هكذا النكد البارع % % 12(@)(@@) % أولئك لا حيهم مؤنس % % صديقا ولا ميتهم فاجع % % PageV01P2729 البحر : - 1(@)(@@) % أأحمد لا والله لا ذقت فيشتي % % فإن شئت فانسبني إلى الخنث أو دع % 2(@)(@@) % أإياي تستغوي بما أنت قائل % % طمعت لعمر الله في غير مطمع % 3(@)(@@) % ألا طالما حرضتني غير مؤتل % على آستك تحريض امرئ بي مولع % % 4(@)(@@) % تحوم على أيري ولست تذوقه % % ولو مت فاصبر للحكاك أو اجزع % % PageV01P2730 البحر : - 1(@)(@@) % فطر توسط يومه الأسبوعا % % وافقت فيه من السعود طلوعا % % 2(@)(@@) % واها له فطر غدا بربيعه % % وربيعك الغدق الحيا مربوعا % % 3(@)(@@) % فالناس والأنعام طرا قد غدوا % % في المرتعين الممرعين رتوعا % % 4(@)(@@) % وكأن فيه من فعالك سندسا % وكأن فيه من الرياض قطوعا % % 5(@)(@@) % ما أفرح الملبوس من أيامنا % % بك لاعدمت وأكسف المخلوعا % % 6(@)(@@) % تتحسر الأيام عنك وكلها % % تشكو فراقك آسفا مفجوعا % % 7(@)(@@) % رحل الصيام وشهره وكلاهما % % لهج بذكرك ما يفيق نزوعا % % 8(@)(@@) % ولقد تناجت بالرجوع مناهما % % لو ملكا بعد المضي رجوعا % % 9(@)(@@) % أقسمت بالشهر الذي أخضلته % % بالجود والتقوى ندى ودموعا % % 10(@)(@@) % للبسته لبسا أطاب نسيمه % % يا بن الأطايب محتدا وفروعا % % PageV01P2731 11(@)(@@) % وخلعته خلع العروس شعارها % % قد ردعته من العبير ردوعا % % 12(@)(@@) % أعبقته من طيب ريحك نفحة % كادت تكون ثناءك المسموعا % % 13(@)(@@) % لم لا يكون كذا وقد ألبسته % % فلبست فيه سكينة وخشوعا % % 14(@)(@@) % وكددت فيه بالبكاء مدامعا % وجهدت فيه بالزفير ضلوعا % % 15(@)(@@) % ورفدت فيه كل أشعث بائس % % ما زال عن طلباته مدفوعا % % 16(@)(@@) % أحييت في الشهر المبارك ليله % وفقيره وقتلت عنه الجوعا % % 17(@)(@@) % بيد إذا قست الأنامل فجرت % من كل أنملة لها ينبوعا % % 18(@)(@@) % أنشأت تكحل بالهجوع معاشرا % بعد السهاد وما اكتحلت هجوعا % % 19(@)(@@) % ما كان ليلك مذ أهل هلاله % % إلا سجودا كله وركوعا % % 20(@)(@@) % وطوى نهارك فيه صوم طاهر % جعل المآثم محرما ممنوعا % % PageV01P2732 21(@)(@@) % صوم غدت عين الخنا مطروفة % فيه وراح لسانه مقطوعا % % 22(@)(@@) % وتساجلت 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms624# عيناك في آنائه % % ويداك صوبا لا يزال هموعا % % 23(@)(@@) % جعل الإله عوارفا أسديتها % % حللا على ابنك ذي العلا ودروعا % % 24(@)(@@) % هذي تزينه وتلك تجنه % % من كل مكروه أحم وقوعا % % 25(@)(@@) % واسعد أبا سهل بعيدك نازلا % فوق الحوادث منزلا مرفوعا % % 26(@)(@@) % في حيث تلقى أنف مجدك شامخا % ويرى عدوك أنفه مجدوعا % % 27(@)(@@) % وتبيت من وقع القوارع آمنا % ويبيت من يهوى رداك مروعا % % 28(@)(@@) % أضحى أبو روح سليلك موردا % أضحى بنو الآمال فيه شروعا % % 29(@)(@@) % خرق له كف يكون سماحها % % كرما إذا كان السماح ولوعا % % 30(@)(@@) % متكلف فوق الطباع مكارما % سمينه المتكلف المطبوعا % % PageV01P2733 31(@)(@@) % لولاه لم تلق النوال مفرقا % أبدا ولا شمل العلا مجموعا % % 32(@)(@@) % ما الطالب المخدوع طالب رفده % % ووجدت طالب شأوه المخدوعا % % 33(@)(@@) % عمر الإله بعمره في غبطة % خططا تضيء بوجهه وربوعا % % 34(@)(@@) % حتى ترى السادات أتباعا له % % وتراه مثلك سيدا متبوعا % % 35(@)(@@) % أقسمت ما لقيت ذل مطالب % كبرا ولا عز الزمان خضوعا % % 36(@)(@@) % من كان عند المعضلات مضعفا % أو كان عند المجحفات منوعا % % 37(@)(@@) % فكم اجتديت فما وجدت مبخلا % وكم امتحنت فما وجدت جزوعا % % 38(@)(@@) % أصبحت تحفظ كل مجد ضائع % حفظا كحفظك دينك المشروعا % % 39(@)(@@) % وأراك نلت من الأمور أجلها % % بدءا وفزت بخيرها مرجوعا % % 40(@)(@@) % ولقد أقول لسائلي عن مجدكم % % غلب المصابيح الصباح سطوعا % % PageV01P2734 41(@)(@@) % لله سؤدد آل سهل سؤددا % لم يمس مغمورا ولا مفروعا % % 42(@)(@@) % قوما تراهم يفتقون مكارما % مرتوقة أو يرتقون صدوعا % % 43(@)(@@) % لا يعدمون صنيعة مصنوعة % تهدي إليهم منطقا مصنوعا % % 44(@)(@@) % يعطون ما يعطونه وكأنما % % يستودعون الأرض منه زروعا % % 45(@)(@@) % من لم يزاول عرفهم ونكيرهم % % لم يضح مشتارا ولا ملسوعا % % 46(@)(@@) % ولما شهدت لهم بغير جلية % ولما رفعت بقدرهم موضوعا % % PageV01P2735 البحر : - 1(@)(@@) % شفيعك من قلبي مكين مشفع % وحظك من ودي حريز ممنع % 2(@)(@@) % فلا تسأليني في هواك زيادة % فأيسره مرض وأدناه مقنع % 3(@)(@@) % لو أن ازديادي في الهوى ينقص الهوى % % إذا لخلا منه المحبون أجمع % 4(@)(@@) % كلانا ادعى أن الفضيلة في الهوى % % له وكلانا صادق ليس يدفع % % 5(@)(@@) % يقاسي المقاسي شجوه دون غيره % % وكل بلاء عند لاقيه أوجع % % 6(@)(@@) % وكنت ومالي في نهاري مؤنس % ولا سكن في الليل والناس هجع % 7(@)(@@) % أبيت رقيب الصبح حتى كأنني % % أرجى 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms625# مكان الصبح وجهك يطلع % % 8(@)(@@) % أصعد أنفاسي وأحدر عبرتي % % بحيث يرى ذاك الإله ويسمع % 9(@)(@@) % ولولا مدى يوم لنفسي تفلتت % على إثر أنفاسي التي تتقطع % % 10(@)(@@) % إلى الله أشكو لا إلى الناس إنما % % مكان الشكايا من يضر وينفع % % PageV01P2736 البحر : - 1(@)(@@) % إن كنت صفعانا ولي ضيعة % وأنت بذبخت ولا تصفع % 2(@)(@@) % فإنما تدعى إذا ضيعة % لأن من يملكها الأضيع % 3(@)(@@) % هذا لعمري عجب عاجب % يا من قفاه منظر مسمع % % 4(@)(@@) % لو صح ما قلت لكان الغنى % % يضر والفقر الذي ينفع % % 5(@)(@@) % دفعت من أمك في طيزها % % إن كان ما قلت الذي يدفع % % 6(@)(@@) % ويحك ما أسخاك من لابس % أكل ما تلبسه تخلع % % 7(@)(@@) % ما كل من كان له نحلة % ينحلها الناس كما تصنع % % PageV01P2737 البحر : - 1(@)(@@) % يا ليت شعري لو سئلت وقد % % أنشدت مدحي فيك من سمعه % 2(@)(@@) % ماذا أثبت عليه قائله % هل كنت تلقى في الجواب سعه % 3(@)(@@) % كلا لأنك إن صدقت فقد % % أقررت أنك أرضع الرضعه % 4(@)(@@) % ومتى كذبت فتلك شرهما % % والإفك يجمع مأثما وضعه % % 5(@)(@@) % وإن استرحت إلى السكوت فما % % لك فيه من لؤم الكرام دعه % % 6(@)(@@) % أتراك توهمهم إذا سألوا % % فسكت أمرا لا تلام معه % % 7(@)(@@) % كلا ولكن يعلمون معا % أن قد سلكت مسالك الخدعه % 8(@)(@@) % كتم اللسان عليك فاستمعت % % فطن لما جمجمت مستمعه % 9(@)(@@) % وكذا عقول ذوي العقول على % % أسرار أهل الجهل مطلعه % % 10(@)(@@) % قد كنت تبت من الهجاء فإن % % شاء اللئام أعدتها جذعه % % PageV01P2738 البحر : - 1(@)(@@) % يا سامعا بالأمس قينة خالد % % ولرب يوم في الخسار مضيع % 2(@)(@@) % نعم الغناء سمعت إلا أنه % % نعم الشراب عليه دهن الخروع % PageV01P2739 البحر : - 1(@)(@@) % ولي طيلسان ناحل غير أنه % % ثبوت لهبات الرياح الزعازع % 2(@)(@@) % وما ذاك إلا أنه متهتك % % يخلي سبيل الريح غير منازع % 3(@)(@@) % أراه كضوء الشمس بالعين رؤية % ويمنعني من لمسه بالأصابع % % 4(@)(@@) % شكى ثقل اسم الطيلسان لضعفه % فسميته ساجا فها ذاك نافعي % % PageV01P2740 البحر : - 1(@)(@@) % وقع الفراق وما يزال يروعني % % فكأن واقع شره متوقع % PageV01P2741 البحر : - 1(@)(@@) % يا رب لهفان على صنيعه % قصر فيها بيد مضيعه % 2(@)(@@) % وقد أتت سامعة مطيعه % ثم ابتغاها صعبة منيعه % 3(@)(@@) % فلم يجدها المشتري مبيعه % وعظمت في فوتها الوضيعه % % 4(@)(@@) % حتى إذا أعيت على الذريعة % % عض البنان 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms626# عضة وجيعه % % 5(@)(@@) % من حر ما لاقى من الفجيعه % % يا بن فراس إنها وديعه % % 6(@)(@@) % أودعتنيها فدع الخديعه % ثم السلام وهي القطيعه % 7(@)(@@) % لا زلت ذا أحدوثة شنيعه % % مقذوفة في أذن سميعه % % 8(@)(@@) % تدعوإليك نقمة سريعه % % PageV01P2742 البحر : - 1(@)(@@) % عاصيت كل هوى مطاع % وملكت قلبي بالزماع % 2(@)(@@) % ورعيت حق مودتي % % إذا لم أجدك لها براع % 3(@)(@@) % ونهيت نفسي عن هوا % % ك فسمحت بعد النزاع % 4(@)(@@) % فعلى مودتك السلا % % م فإنه خير الوداع % % 5(@)(@@) % إذا تفرقت الفجا % % ج بنا بفرقة لا اجتماع % % 6(@)(@@) % ليس التضرع للهوى % % من شيمة البطل الشجاع % 7(@)(@@) % فاذهب فقبلك ما سلو % % ت عن الشبيبة والرضاع % % PageV01P2743 البحر : - 1(@)(@@) % قلت لخود ضفتها مرة % من أهل بيت الشرف الأرفع % % 2(@)(@@) % وقد بدت ساق لها خدلة % كأنما تمشي على خروع % % 3(@)(@@) % يتبعها ردف لها راجح % % ينوخ فيها أكثر الإصبع % % 4(@)(@@) % يا ربة المنزل هل عندكم % % من مطعم للزب أو مطمع % % 5(@)(@@) % قالت على كم أنت من شعبة % فقلت قول القائل الأروع % 6(@)(@@) % على ثلاث ضيفكم قائما % فهل تقومون على أربع % 7(@)(@@) % قالت نعم والله يا دافني % % وصائني عن ذلة المصرع % % 8(@)(@@) % نحن أصحاء بلا علة % فما لنا الآن وللمضجع % % 9(@)(@@) % قلت لقد قلت ألا فعلي % % فأي ردف ثم لم تشرع % % 10(@)(@@) % ردف إذا لاقاك مستهدفا % قالت له الشهوة قم فادفع % % PageV01P2744 11(@)(@@) % فلم أزل أشفي حرارتها % % بمثل رأس الرجل الأصلع % % 12(@)(@@) % وخير ما تقريكه حرة % أن تدخل الأصلع في الأفلع % % 13(@)(@@) % نعم القرى ذاك ولكنه % % يصلح للشبعان لا الجوع % % 14(@)(@@) % أحسبها أم الفتى مدرك % % خطيب أهل الأدب المصقع % % 15(@)(@@) % تلك التي لو عدلت فيشتي % % عن خرقها الواسع لم يرقع % 16(@)(@@) % سوف يرى الديوث من ذا غدا % % يخزي ويلقي الذل في المجمع % 17(@)(@@) % قد كان لولا أنه حائن % في منظر عني وفي مسمع % % PageV01P2745 البحر : - 1(@)(@@) % بك تمت لي السلامة يا سا % % لم يا سيد الأنام جميعا % % 2(@)(@@) % إذ لك اسم من السلامة مشتق % ق وإذ كنت لي إليها شفيعا % % 3(@)(@@) % فقلت تمي لخادمي فأطاعت % ك بحق ومن أطاع أطيعا % % 4(@)(@@) % فابق ما دام طيب نشرك في الن % % اس وما عاقب الخريف الربيعا % % PageV01P2746 البحر : - 1(@)(@@) % أصبح يعقوب وتبجيله % للخبز مرئي ومسموع % 2(@)(@@) % رغيفه في قدر ديناره % % بتلكم السكة مطبوع 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms627# % 3(@)(@@) % بل آية الكرسي مكتوبة % فهو طوال الدهر ممنوع % % 4(@)(@@) % لا يشتكي ضيف له كظة % لكنه يقتله الجوع % % PageV01P2747 البحر : - 1(@)(@@) % بدعة عندي كاسمها بدعه % لا إفك في ذاك ولا خدعه % 2(@)(@@) % يجتمع الظرف لجلاسها % % والحسن والإحسان في بقعه % 3(@)(@@) % يا أيها السائل عن حظها % % للناس جزء ولها تسعه % 4(@)(@@) % كأنما غنت لشمس الضحى % % فألبستها حسنها خلعه % 5(@)(@@) % ممن قضى الله بإحسانه % % ما أحسنت قمرية سجعه % 6(@)(@@) % لها مسير في أغانيها % % توسط الإبطاء والسرعه % 7(@)(@@) % كأنما رقة مسموعها % % رقة شكوى سبقت دمعه % % 8(@)(@@) % تهدي إلى قلبك ما يشتهي % % كأنها قد أطلعت طلعه % % 9(@)(@@) % تحسن في البدأة لكنها % % أحسن من بدأتها الرجعة % % 10(@)(@@) % لو أسندت ميتا إلى نحرها % % أو عودها ثاب من الضجعه % % PageV01P2748 11(@)(@@) % غنت فلم تحوج إلى زامر % % هل يحوج الصبح إلى شمعه % 12(@)(@@) % وشيع الزمر أعاجيبها % % من ظبية أوفت على تلعه % % 13(@)(@@) % فكان تاجا زاد في بهجة % لا كمة غطت على صلعه % % 14(@)(@@) % ويح ابن أيوب لقد فاته % % منها السماع اللذ والصنعه % % 15(@)(@@) % فما يبالي بعدما ناله % % مما وصفنا ما دهى سمعه % 16(@)(@@) % وكم شقي ملكت قلبه % % فقطعته قطعة قطعه % 17(@)(@@) % عانده في أمرها نحسه % وساعدتها الأنجم السبعه % 18(@)(@@) % كذاك من يقرب من خطة % تكن له الخطة بالشفعة % 19(@)(@@) % ظلت وقد أبدت لنا وجهها % % في ضحوة الجمعة كالجمعه % % 20(@)(@@) % كأنما تجلو لأبصارنا % % من شمس يوم غائم لمعه % % PageV01P2749 21(@)(@@) % أقسمت لومكنت من شدوها % % وكان وترا لا أرى شفعه % % 22(@)(@@) % لم أحفل الملك ولا ملكه % % ما حنت النيب ولا نزعه % % 23(@)(@@) % وكان قلبي أبدا ظرفه % % وكان سمعي أبدا قمعه % % 24(@)(@@) % وخلتني ما دمت تلقاءها % % من جنة الخلد على ترعه % % 25(@)(@@) % طفل على من حصلت عنده % % فبعض تطفيل الفتى رفعه % % 26(@)(@@) % واستفتح الباب الذي دونها % % تفتح لدى فتحكه قلعه % % 27(@)(@@) % تلك ربع فانتجع روضه % % فلن يعاب الحر بالنجعه % % 28(@)(@@) % حافظ على مجلسها جاهدا % فإنه ناهيك من متعه % % 29(@)(@@) % وحدث الناس به فاخرا % فإنه ما شئت من سمعه % 30(@)(@@) % أسمعنيها سيد ماجد % يفوز بالمجد لدى القرعه % PageV01P2750 31(@)(@@) % لكنه عودني ظالما % أن يتبع الفرحة بالفجعه % % 32(@)(@@) % بيناه قد ألبسني نخوة % بالعطف إذ ألبسني خشعه % % 33(@)(@@) % وبينما وجهي به مسفر % إذ برقعت وجهي به سفعه % % 34(@)(@@) % يفيق لي من سكر لذاته % % إفاقة 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms628# تتبعها هجعه % % 35(@)(@@) % أدعى فأسعى فأرى حاجبا % جهما لديه المنع والمنعه % % 36(@)(@@) % فشافع يحفزه شافع % % ورقعة تحفزها رقعه % % 37(@)(@@) % والنفس في لبس وفي حيرة % % والجسم نضو يشتكي ظلعه % % 38(@)(@@) % من دفعة تتبعها جذبة % وجذبة تتبعها دفعه % 39(@)(@@) % يجذبني للدفع ذو قوة % يدفعني للجذب في سرعه % % 40(@)(@@) % ويحي كم تعذب لي جرعة % منه وكم تملح لي جرعه % % PageV01P2751 41(@)(@@) % كأنه في فعله نحلة % % تتبع منها مجة لسعه % % 42(@)(@@) % خير حديث من أخ صدقه % % يا من أبت أعراقه وضعه % 43(@)(@@) % عبدك إن أنصفت من بانة % فإن تعديت فمن نبعه % 44(@)(@@) % ها هو مبد لك مكنونه % فقد أضاقت حاله ذرعه % 45(@)(@@) % ولو رجا ودك دون الجدا % % ما كظ ما قد سمته وسعه % % 46(@)(@@) % لكنه يلحظ منك القلى % % عن ظنة قد زلزلت ربعه % % 47(@)(@@) % وما بكت عيناه من حسرة % ولا شكا بين الحشا لذعه % % 48(@)(@@) % ولا رآه الله مستعطفا % أصل الرضا منك ولا فرعه % 49(@)(@@) % فكيف استعطف مستنفري % % لا لطماح يبتغي قذعه % % 50(@)(@@) % ولا لذنب جئته موجب % ردي إذا جئت ولم أدعه % % PageV01P2752 51(@)(@@) % والحر ما استنفزته نافر % ولو تلقى أنفه جدعه % % 52(@)(@@) % في بلغ الإخوان لي عصمة % وفي رجاء الله لي شبعه % % 53(@)(@@) % متى توددت إلى مبغض % أو يممت بي قدمي صقعه % % 54(@)(@@) % فلا أقال الله لي عثرة % ولا أقل الله لي صرعه % % 55(@)(@@) % أما درى من جار في حكمه % % من ملك أني أرى خلعه % 56(@)(@@) % شرطي من الأملاك من لاأرى % % لي كل يوم معه وقعه % % 57(@)(@@) % لا يتبع الصفوة لي بالقذى % % ولا الطمأنينة بالفزعه % 58(@)(@@) % ممن يؤاخي سيفه غمده % % ولا يؤاخي سيفه نطعه % % 59(@)(@@) % ولا يرى أني إذا زرته % قصدت للهرسة والمقعه % % 60(@)(@@) % دع ذا وجاوزه إلى غيره % % وارض لمن أغضبته طبعه % % PageV01P2753 61(@)(@@) % وأمن شواظا فار من غيظه % % يكفك حلم راجح قمعه % % 62(@)(@@) % حاشاه أن تتبعه عزة % من عزة تتبعها خضعه % % 63(@)(@@) % ولو رأيت اليأس من عفوه % % لم ير مني هذه الخنعه % % 64(@)(@@) % وما على عبد أخي طاعة % ضيعه مولى ولم يرعه % % 65(@)(@@) % أغضبه حتى طغا جهله % فلم يقل في لومه قذعه % % 66(@)(@@) % يا أيها المأمول في دهره % % زع من عرامي بالندى وزعه % 67(@)(@@) % بادر بمعروفك آفاته % % فبنية الدنيا على القلعه % 68(@)(@@) % وازرع زروعا ترتضي ريعها % % يوما فكل 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms629# حاصد زرعه % 69(@)(@@) % قد كنت من عرفك ذا سلوة % لو لم تكن ذوقتني طلعه % 70(@)(@@) % لكن تشوفت إلى ينعه % % بطلعه فامنح يدي ينعه % % PageV01P2754 71(@)(@@) % هل يمنع الحر جنى حظه % % من هز هزا لينا جذعه % % PageV01P2755 البحر : - 1(@)(@@) % رفعت إلى وديك أبصار همتي % % لترفع من قدري فهل أنت رافع % 2(@)(@@) % وإني وصدق المرء من خير قوله % % لراض بحظي من ضميرك قانع % 3(@)(@@) % ومستيقن أني لديك بربوة % لها شرف مما تجن الأضالع % 4(@)(@@) % ولكن بي من بعد ذلك حاجة % إلى أن يرى راء ويسمع سامع % % 5(@)(@@) % ليكبت أعدائي ويرغم حسدي % % ويقمعهم عن شرة البغي قامع % % 6(@)(@@) % فقد شك في حالي لديك معاشر % % وفي مثل حالي للشكوك مواضع % % 7(@)(@@) % ولن يوقن الشكاك ما لم يقم لهم % % على السر برهان من الجهر ناصع % % 8(@)(@@) % أأن قلت إني ما انتجعتك مجدبا % أبا أحمد تحمي علي المراتع % % 9(@)(@@) % فلست غنيا عنك ما ذر شارق % ولو سال بالرزق التلاع الدوافع % 10(@)(@@) % شهدت متى استغنيت عنك بأنني % % غني عن الماء الذي أنا جارع % PageV01P2756 11(@)(@@) % فكيف الغنى عمن بمعروفه الغنى % % وعمن بكفيه الغيوث الروابع % 12(@)(@@) % مديحي وإن نوهته لك مبذل % وخدي وإن صعرته لك ضارع % % 13(@)(@@) % لمثلك يستبقي العفيف سؤاله % % ويقنى الحياء الحر والرمح شارع % % 14(@)(@@) % أتعلمني من مدح غيرك صائما % صياما له قدما علا في طابع % % 15(@)(@@) % وحلأت نفسي عن شرائع جمة % لترويني مما لديك الشرائع % % 16(@)(@@) % وما كنت أخشى أن تخيب ذريعتي % % لديك إذا خابت لديك الذرائع % % 17(@)(@@) % فلا أكن المحروم منك نصيبه % % بلا أسوة إني لذلك جازع % % 18(@)(@@) % متى استبطأ العافون رفدك أم متى % % تقاضاك أثمان المدائح بائع % % 19(@)(@@) % وقد وعدت عنك الأماني مواعدا % % مطلن بها والحادثات فواجع % % 20(@)(@@) % أحاذر أن يرميني الدهر دونها % % بحتف وحاشاك الحتوف الصوارع % % PageV01P2757 21(@)(@@) % وإني لأرجو أن يكون مطالها % % لتجنيني ما أثمرت وهو يانع % % 22(@)(@@) % قبولك ميلي وانقطاعي وخدمتي % % قصاري ولكن للقضاء توابع % 23(@)(@@) % ومقصود ما يبغى من السيف مضرب % حسام إذا لاقى الضريبة قاطع % 24(@)(@@) % على أنه من بعد ذلك يبتغى % % له رونق يستأنق العين رائع % % 25(@)(@@) % كذلك محض الود منك فريضتي % % ونافلتي فيك الجدا والمنافع % 26(@)(@@) % فكن عندما أملت منك فلم تكن % % لتخلفني منك البروق اللوامع % % 27(@)(@@) % وعش أبدا في 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms630# غبطة وسلامة % % وأمن إذا راعت سواك الروائع % % 28(@)(@@) % فأنت لنا واد خصيب جنابه % وأنت لنا طود من العز فارع % % PageV01P2758 البحر : - 1(@)(@@) % فتى إن أجد في مدحه فلأنني % % وجدت مجالا فيه للقول واسعا % % 2(@)(@@) % وإن لا أجد في مدحه فلأنني % % وثقت به حتى اختصرت الذرائعا % % 3(@)(@@) % ومن يتكل لا يحتفل في ذريعة % ولا يسع إلا خافض البال وادعا % % 4(@)(@@) % كفى طالبا عرفا إذا أم أهله % % من المدح ما أعفى به الشعر طائعا % % 5(@)(@@) % على أنه لو زارهم غير مادح % كفاه بهم دون الشوافع شافعا % % 6(@)(@@) % أبا حسن إن لا أكن قلت طائلا % فإني لم أنهض من الفكر واقعا % % 7(@)(@@) % مدحتك مدح المستنيم إلى امرىء % كريم فقلت الشعر وسنان هاجعا % % 8(@)(@@) % وإن أك قد أحسنت فيه فإنه % % بما أحسنت قبلي يداك الصنائعا % % 9(@)(@@) % فعلت فأبدعت البدائع فاعلا % فأبدع فيك القائلون البدائعا % % 10(@)(@@) % فلا زلت تسدي صالحا وأنيره % فتحسن متبوعا وأحسن تابعا % % PageV01P2759 البحر : - 1(@)(@@) % ألا ليس شيبك بالمتزع % فهل أنت من غيه مرتدع % 2(@)(@@) % وهل أنت تارك شكوى الزمان % % إذا لست تشكو إلى مستمع % 3(@)(@@) % عتبت على المقرض المقتضي % % وما ظلم المسلف المرتجع % 4(@)(@@) % بلى إن من ظلمه لومه % % وما ألأم المعطي المنتزع % % 5(@)(@@) % وطول البقاء حبيب الفتى % % ولكن بأي مقيت شفع % % 6(@)(@@) % نحب البقاء وفيه الغنا % % ء والعيش متصل منقطع % % 7(@)(@@) % إذا المرء طالت به مدة % علا الشيب مفرقه أو صلع % % 8(@)(@@) % فمحبوبه مع مكروهه % % إذا ما اجتنى منه أريا لسع % 9(@)(@@) % وشيخوخة المرء أمنية % متى ما تناهى إليها هلع % 10(@)(@@) % ألا فعزاءك عما مضى % % فليس يؤوب إلى من جزع % PageV01P2760 11(@)(@@) % ولا تعدل الدهر في غدره % % بإخوانه فعليه طبع % % 12(@)(@@) % ألا وازدرع ما جدا مدحة % فإنك حاصد ما تزدرع % % 13(@)(@@) % ولا تعدون ابن عبد العزي % % ز والحكم حكمك إن لم يرع % % 14(@)(@@) % ولم لا يريع لزراعه % % كريم أثير ومدح زرع % % 15(@)(@@) % ألا فامر أخلاف معروفه % % فإنك إن تمرها ترتضع % % 16(@)(@@) % يكنى بليلى على أنه % % ينوب عن الفلق المنصدع % % 17(@)(@@) % وإن كان كالليل في ظله % % وفي وسعه كل شيء وسع % 18(@)(@@) % فتى ضاف بغداد يقري اللهى % % فكل بريقه مرتبع % % 19(@)(@@) % ولم ير ضيف قرى قبله % % مضيفا ولا كان فيما سمع % 20(@)(@@) % فتى لا تزال 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms631# لسؤاله % % عطايا على سائل تقترع % % PageV01P2761 21(@)(@@) % تنادت قرائن أمواله % % ألا للتفرق ما نجتمع % 22(@)(@@) % جواد غدا كل ذي خلة % بما ضر ثروته منتفع % 23(@)(@@) % جلا عرضه وجلا سيفه % % جميعا فما فيهما من طبع % 24(@)(@@) % فهذا لزينته آمنا % % وذاك لبذلته إن فزع % % 25(@)(@@) % يلاقي القوافي في درعه % % ويلقى الحروب ولم يدرع % % 26(@)(@@) % وما يعرف الدرع إلا الندى % % أو الصبر في كل يوم مصع % % 27(@)(@@) % إذا قيل عافيه عاف أني % % ل قلت لهم بل جناب ربع % % 28(@)(@@) % إذا امتيح جم لممتاحه % % ويأبى صفاه إذا ما قرع % % 29(@)(@@) % قريب النوال بعيد المنا % % ل يقرب في شرف مرتفع % % 30(@)(@@) % كمثل السحاب نأى شخصه % ولم ينأ منه صبيب همع % % PageV01P2762 31(@)(@@) % ولا عيب فيه سوى نائل % يلاقي السؤال بخد ضرع % % 32(@)(@@) % على أنه قد كفى السائلي % % ن فاترعوا وهو لا يترع % % 33(@)(@@) % أعف العفاة فقد أصبحت % % عطاياه تنتجع المنتجع % % 34(@)(@@) % فسائله شامخ باذخ % ونائله خاشع منقمع % 35(@)(@@) % تولت سماحته أمره % % وفيها خلال الخليع الورع % 36(@)(@@) % فخانته واقتطعت ماله % % ألا حبذا الخائن المقتطع % 37(@)(@@) % ولكنها وفرت عرضه % % وصانته عن كل قيل قذع % 38(@)(@@) % ولم تضطلع باختزان الثرا % % ء لكنها بالعلا تضطلع % 39(@)(@@) % أطاع السماحة في ماله % % فأي الثناء له لم يطع % % 40(@)(@@) % فلا يعجب الناس من مقول % غدا في مدائحه ينزرع % % PageV01P2763 41(@)(@@) % وحسب الكريم إذا ما حبا % % وحسب اللئيم إذا ماشبع % % 42(@)(@@) % يرى المال يعطى كمثل القذا % % أميط وليس كأنف جدع % % 43(@)(@@) % متى ينخدع لك عن ماله % % فليس عن المجد بالمنخدع % % 44(@)(@@) % يميت الرياء ويحيى الندى % % فيعطي ويخفي الذي يصطنع % % 45(@)(@@) % على أنه المسك يأبى ثنا % % ه إلا انتشارا وإن لم يمع % % 46(@)(@@) % يسر العطايا وآلاؤه % % يرين إذاعة ما لم يذع % % 47(@)(@@) % ومن فعل الخير مستخفيا % أشاعت مساعيه ما لم يشع % 48(@)(@@) % أبا ليلة البدر خذها إلي % % ك تصدق فيك ولا تخترع % % 49(@)(@@) % مهذبة مثل ممدوحها % % من الخلع اللائي لا تختلع % % 50(@)(@@) % هي الدهر تاج على ربها % % وقرطان في أذني مستمع % % PageV01P2764 51(@)(@@) % يقول الوعاة إذا أنشدت % أألصخر يقتلع المقتلع % % 52(@)(@@) % أتيت نوالك من بابه % % ولست الخدوع ولست الخدع % % 53(@)(@@) % وما ساءني فوت ما فاتني % % وإن كان كالعضو مني نزع % % 54(@)(@@) % لأني على ثقة أنني % % متى رمت رفدك لم يمتنع % % 55(@)(@@) % سبقت بأشياء 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms632# أسديتها % % وأنت المخيلة لا تنقشع % % 56(@)(@@) % ومدت وسائل أعدمتها % % وأنت الوسيلة لا تنقطع % % 57(@)(@@) % فما فاتني فكأن لم يفت % وما ضاع لي فكأنما لم يضع % 58(@)(@@) % وأقسم بالله إن لم أهب % نصيبي منك وإن لم أبع % % 59(@)(@@) % ولكنني في يدي علة % وأرجو بيمنك أن تتزع % % 60(@)(@@) % وإن يك لي سبب قاطع % % فما أملي فيك بالمنقطع % PageV01P2765 61(@)(@@) % ومن يعترض مثلكم لا يقف % % ومن يقتحم مثلكم لا يكع % 62(@)(@@) % وكم من مسيء أتى سابقا % ويا رب محسن قوم تبع % % 63(@)(@@) % ومن حاربته الليالي اشتكى % % ومن سالمته الليالي مجع % 64(@)(@@) % ومسبعة الدهر مشحونة % % ومن حل بين سباع سبع % % 65(@)(@@) % فلا تحرمني على علتي % % فأحظى بحظي لهيف وجع % % 66(@)(@@) % جرى الشعراء لكي يبدعوا % % فلم يجدوا غير ما تصطنع % % 67(@)(@@) % وحاولت إبداع أكرومة % % على أوليك فلم تستطع % % 68(@)(@@) % فأصبحتم قد تكافأتم % ولا بدع حاولتم ممتنع % % 69(@)(@@) % فلا تطلبوا بعدها بدعة % % وكونوا كسائر من يتبع % % 70(@)(@@) % أقول وقد أرهنوك الأمي % % ر لا بالذميم ولا بالجدع % PageV01P2766 71(@)(@@) % ولا بالهدان ولا بالددا % % ن كلا ولا بالجبان الهلع % 72(@)(@@) % ولا بالقليل ولا بالذلي % % ل كلا ولا بالبخيل الجشع % % 73(@)(@@) % وفى للأمير أناس غدا % % رهينتهم كل مرعى مرع % 74(@)(@@) % وفى للأمير أناس غدا % % رهينتهم كل طود فرع % % 75(@)(@@) % فأنى يخيس أناس غدت % رهينتهم كل خير جمع % % 76(@)(@@) % وفى حاجب راهنا قوسه % % وراقب فيها الحديث الشنع % 77(@)(@@) % وقومك أحنى على رهنهم % % وما البدر من عود نبع فرع % 78(@)(@@) % وآل أبى دلف معشر % يرون المكارم دينا شرع % % 79(@)(@@) % إذا أبدىء الطول منهم أعي % % د أو أوتر العرف فيهم شفع % % 80(@)(@@) % ترى في ذراهم غنى المجتدي % % وعز الذليل وأمن الفزع % % PageV01P2767 81(@)(@@) % وفيهم مذاقان للذائقي % % ن حلو لذيذ ومر بشع % % 82(@)(@@) % بنوا في الجبال جبال العلا % % فتلك الجبال لها تختشع % % 83(@)(@@) % وما امتنعوا من عدو بها % % ولكنها بهم تمتنع % % 84(@)(@@) % سمت بجدودهم رتبة % جدود الملوك لها تصطرع % % 85(@)(@@) % هم المبدعون بديع العلا % % إذا كان غيرهم المتبع % % 86(@)(@@) % وما الدين إلا مع التابعي % % ن لكنما المجد للمبتدع % 87(@)(@@) % يضيق على مادحي غيرهم % % مقال لمداحهم يتسع % 88(@)(@@) % هم يبسطون لسان العيي % % ي مجدا يصنع غير الصنع % 89(@)(@@) % وهم يقطعون لسان البلي % % غ جودا يقنع غير القنع % % 90(@)(@@) % يفوه مداحهم أنهم % % يمدونهم 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms633# من إناء ترع % % PageV01P2768 91(@)(@@) % ويسكت مداحهم أنهم % % يجودونهم من نجاء همع % % 92(@)(@@) % فكم بسطوا من لسان امرىء % فأسرف في الطول حتى ذرع % % 93(@)(@@) % وكم قطعوا من لسان امرىء % وإن كان لم يدم لما قطع % % 94(@)(@@) % هم غضبوا للعلا فاشتروا % % مدائح بيعت فلم تستبع % % 95(@)(@@) % سموا فاشتروها بأحسابهم % % ولم يشتروها لوهي رقع % 96(@)(@@) % وكم راقع حسبا واهيا % بمدح وإن كان لا يرتقع % 97(@)(@@) % ولم يعلهم جودهم بل علوا % % فجاءوا بكل نوال منع % % 98(@)(@@) % علوا فسقوا كل من تحتهم % % فكم من عليل بهم قد نقع % % 99(@)(@@) % كسقف السماء أغاث العبا % % د شكرا لرفعه إذ رفع % 100(@)(@@) % وحق العلو على المعتلي % % حنو وعطف على المتضع % PageV01P2769 101(@)(@@) % كأنكم يا بني قاسم % كواكب من قمر تنقلع % 102(@)(@@) % هو البدر أداكم أنجما % تواضع في فلك يرتفع % % 103(@)(@@) % كساكم أبو دلف خيمه % فكل بسكته منطبع % % 104(@)(@@) % وكنتم أناسا لكم شيمة % قد استشعر اليأس منها الطمع % % 105(@)(@@) % وفي الناس مما خصصتم به % تفاريق لكن متى تجتمع % % 106(@)(@@) % وما بات عانيكم كانعا % ولا هم جاركم مكتنع % % 107(@)(@@) % وقدما وددتم وعوديتم % وهيهات من ضر ممن نفع % % 108(@)(@@) % فليس يعافكم ذائق % وليس يسيغكم مبتلع % % PageV01P2770 البحر : - 1(@)(@@) % هل أنت من مرتجيك مستمع % يا من إليه يوائل الفزع % 2(@)(@@) % أصغ إليه فلم يحابك في ال % % مدح ولا قال وهو مخترع % 3(@)(@@) % يا من إذا أشرقت محاسنه % ظلت رؤوس العداة تنقمع % 4(@)(@@) % ومن إذا غربت مكائده % كادت قلوب العتاة تنخلع % 5(@)(@@) % ومن إذا أمطرت فواضله % % عاد الصفا وهو معشب مرع % % 6(@)(@@) % ما أعذر القرن في تذبذبه % % يهوي إليك الشبا وينقدع % % 7(@)(@@) % قد علم القرن عند حيصته % % عنك بأي السيوف تضطبع % % 8(@)(@@) % وقد درى حين زال مطمعه % % فيك بأي الدرع تدرع % % 9(@)(@@) % أنت الذي أصبحت عوارفه % % درعا له والدروع تنصدع % % 10(@)(@@) % وأنت من لم تزل مكائده % % سيفا له والسيوف تنقطع % % PageV01P2771 11(@)(@@) % تصرع من شئت عند لبسهما % % يوم الوغى والجدود تصطرع % % 12(@)(@@) % يدب في غيرك المديح ول % % كنا رأيناه فيك ينذرع % % 13(@)(@@) % وتهطل الدهر فيك ديمته % لكنها عن سواك تنقشع % % 14(@)(@@) % وأين معط وقلبه بهج % % ممن تمنى وقلبه وجع % % 15(@)(@@) % لا يزل الشر عنك مندفعا % وسيل خير إليك يندفع % % 16(@)(@@) % يا سيدا لم نزل بعفوته % إذا عدمنا الربيع نرتبع % 17(@)(@@) % ولم 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms634# نزل من ثدي نعمته % % إذا فقدنا الرضاع نرتضع % 18(@)(@@) % ومن علمناه غير متبع % % في المجد بل لا يزال يبتدع % % 19(@)(@@) % ومن عرفناه غير مبتدع % في الدين بل لا يزال يتبع % 20(@)(@@) % أعاذك الله أن نراك وأف % % عالك بعد العلو تتضع % % PageV01P2772 21(@)(@@) % عد لي فليس الجميل فاحشة % تركبها تارة وتتزع % % 22(@)(@@) % ولا طريقا تخاف غيلته % % تركبه تارة وترتدع % % 23(@)(@@) % والعائد العرف بعد بدأته % % ينفع إخوانه وينتفع % % 24(@)(@@) % والبادئ العرف لا معاد له % % يعير إحسانه ويرتجع % 25(@)(@@) % لو كنت ممن يحب ثروته % % أو كنت ممن جداه ممتنع % 26(@)(@@) % إذا عذرناك في المطال به % % لكن عذر الجواد منقطع % 27(@)(@@) % ما دفع مثلي والحال موجبة % % والصدر رحب والوجه متسع % % 28(@)(@@) % لا تمنعني لهى ممنحة % أضحت عليها الأكف تقترع % % 29(@)(@@) % يا من أراه رضا لمنتجع % إن قال أي الرجال أنتجع % 30(@)(@@) % رشنى تجدني رضى لمصطنع % إن قلت أي الرجال أصطنع % PageV01P2773 31(@)(@@) % كم سائل عن نداك قلت له % % مخدع بالسؤال منخدع % 32(@)(@@) % وسائل عن حجاك قلت له % % يحط أمواله ويرتفع % % 33(@)(@@) % وسائل عن ثناك قلت له % % لا يسأم الدهر منه مستمع % % 34(@)(@@) % وكلهم كان في مسائله % % أعمى عن الصبح وهو منصدع % % 35(@)(@@) % يستوضح الصبح بالمصابح وال % % مصباح عند الصباح مختشع % % 36(@)(@@) % لا زلت ما عشت للعدو شجى % في حيث لا يستطيع منتزع % % 37(@)(@@) % تسطو وتعفو وأنت مقتدر % % لا ورع عند ذاك بل ورع % % 38(@)(@@) % ما أقبح المطل من أخي كرم % % وعيب من قل عيبه شنع % % 39(@)(@@) % ولم تعدني بل المنى وعدت % والحر من خلف طيفه جزع % % 40(@)(@@) % متى تعللت أم متى عرف ال % % إقلاع شؤبوب سيبك الهمع % % PageV01P2774 41(@)(@@) % ألست من لم تزل تحمله ال % % علياء أعباءها فيضطلع % % 42(@)(@@) % ويرتجي خيره اليؤوس إذا % % لم يرج ما عند غيره الطمع % 43(@)(@@) % ويعتفي فضله العزوف إذا % % لم يلتمس فضل غيره الجشع % 44(@)(@@) % ويشمخ المعتفي عليه إذا % % لاقى بخيلا وخده ضرع % 45(@)(@@) % تفترق الصالحات في فرق % وفيك دون الجميع تجتمع % 46(@)(@@) % بلى بلى أنت أنت فلا % % يقطعك دون التمام مقتطع % 47(@)(@@) % يا ذاكر الغنم عند مغرمه % % وذاكر الريع حين يزدرع % % 48(@)(@@) % أولع بي العارفات في يدك الس % % محة إن الزمان بي ولع % 49(@)(@@) % والغوث منه أوان ينتهي الش % شلو ولا غوث حين 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms635# يبتلع % % 50(@)(@@) % أبا الحسين اهتزز فإنك لا الن % % اكل في موطن ولا الطبع % % PageV01P2775 51(@)(@@) % ولينعطف منك منعطف حسن الط % طاعة لا مانع ولا جزع % % 52(@)(@@) % يا من دعاني إلى الغنى أثر % لطابع الجود فيه منطبع % % 53(@)(@@) % شهدت أني اعتقدت منك أخا % لم يخدع الرأي فيه مختدع % % 54(@)(@@) % متيما بالعلا أخا شعف % يخطب أبكارها ويفترع % % 55(@)(@@) % يمزح بالجود لا السفاه فإن % % جد فزول ذو عقدة مصع % 56(@)(@@) % ما زلت بالإذن لي وبالأذن ال % % مجدي وأي الجميل تتدع % 57(@)(@@) % تمهد لي مطلبي وآونة % تمهد لي مضجعي فأضطجع % % 58(@)(@@) % خذها كصم الصخور أقلعتها % % من جبل شامخ فتنقلع % % 59(@)(@@) % مجدك ذاك الذي أناف على الن % نجم أصيل من طوده فرع % 60(@)(@@) % ومن أبى ما أقول فيك فحي % ياه بموسى قعساه مجتدع % % PageV01P2776 61(@)(@@) % وبعد فاسلم على الزمان ولا % % زالت يد السوء عنك تندفع % % PageV01P2777 البحر : - 1(@)(@@) % لما حق من صد عن مشرب % لبعض القذى فيه أن يمنعه % 2(@)(@@) % بلى حقه أن يصفى له % % ليلتذ عند الصدى مكرعه % 3(@)(@@) % أبى الله قطعك رزق امرىء % أبى الفضل والطول أن يقطعه % % 4(@)(@@) % وعلمك أن السدى كله % % ستنشر ذكراه في مجمعه % 5(@)(@@) % وما ذاك إلا عقاب امرىء % رأى السيف من حيده موضعه % % 6(@)(@@) % منعت الكفاف الذي لم تزل % % تجود به كفك الموسعه % 7(@)(@@) % فإن كنت مسلم ذي حرمة % لقول أعاديه ما أضيعه % 8(@)(@@) % فعجله بالسيف كي تستري % % ح إن كنت من قتله في سعه % % 9(@)(@@) % أتسلمنا للردى ستة % وقد كنت ترحمنا أربعه % % PageV01P2778 البحر : - 1(@)(@@) % وفقحة كالحوت في ابتلاعها % % يعجز بيت المال عن إشباعها % % 2(@)(@@) % من الغراميل وعن إرضاعها % % ماء الرجال غاية ارتضاعها % % 3(@)(@@) % يعوي عبيد الله من إضباعها % % واسعة الخرق على رقاعها % % 4(@)(@@) % فالأرض كالبقعة من بقاعها % % لو ذرعت شقت على ذراعها % % 5(@)(@@) % فهو سخي النفس عن إقطاعها % % ليت لعينيه من اتساعها % % 6(@)(@@) % ما لاسته من صحنها وقاعها % % مص وفقحة كالحوت في ابتلاعها % % 7(@)(@@) % يعجز بيت المال عن إشباعها % % من الغراميل وعن إرضاعها % % 8(@)(@@) % ماء الرجال غاية ارتضاعها % % يعوي عبيد الله من إضباعها % % 9(@)(@@) % واسعة الخرق على رقاعها % % فالأرض كالبقعة من بقاعها % % 10(@)(@@) % لو ذرعت شقت على ذراعها % % فهو سخي النفس عن إقطاعها % % PageV01P2779 11(@)(@@) % ليت لعينيه من اتساعها % % ما لاسته من صحنها 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms636# وقاعهانه % % PageV01P2780 البحر : - 1(@)(@@) % سهولة الشريعه % تغني عن الذريعه % % 2(@)(@@) % يا ذا اليد المنيعه % والأذن السميعه % 3(@)(@@) % والهمة الرفيعه % يا قابل الخديعه % 4(@)(@@) % وفاعل البديعه % هل لك في صنيعه % 5(@)(@@) % تجعلها وديعه % % PageV01P2781 البحر : - 1(@)(@@) % ألا قل لذي العطن الواسع % أخي المجد والشرف اليافع % 2(@)(@@) % ليهنك أنك مستقبل % دوام المزيد بلا قاطع % 3(@)(@@) % وأن لست ممنوع أمنية % وأن لست للخير بالمانع % 4(@)(@@) % وأن لست كلا على ناظر % وأن لست وقرا على سامع % 5(@)(@@) % فلا زال جدك مستعليا % له قوة الغالب الصارع % % 6(@)(@@) % ولا زال سعدك مستصحبا % مساعدة القدر الواقع % % 7(@)(@@) % إلى أن تحل ذرى مرغم % أنوف أعاديكم جادع % % 8(@)(@@) % على أنني بعد ذا قائل % ولست لقولي بالدافع % % 9(@)(@@) % ألست المحب ألست المرب % ب من قبل برقكم اللامع % % 10(@)(@@) % ألست المحق ألست المدق % ق في المعييات على الصانع % PageV01P2782 11(@)(@@) % فما لي ظلمت وما لي حرم % % ت منكم وضعت مع الضائع % % 12(@)(@@) % ألم تعلموني علم اليقي % % ن والحق كالفلق الساطع % % 13(@)(@@) % طلعت بأيمن ما طائر % % عليكم وأسعد ما طالع % % 14(@)(@@) % فجاءتكم دولة عضة % تفيأ في ثمر يانع % 15(@)(@@) % ألم أك أدعو بتمكينكم % % سرارا مع الساجد الراكع % % 16(@)(@@) % ألم أك أثني بآلائكم % % جهارا مع المعلن الصادع % % 17(@)(@@) % ألم تعلموا أنني جئتكم % مجيء المخالص لا الطامع % % 18(@)(@@) % وأني خدمت وأني استقمت % % إذا ضلعت شيمة الضالع % % 19(@)(@@) % وأني نصحت وأني مدح % % ت بالمنطق الرائق الرائع % % 20(@)(@@) % أمن بعد ما سار معروفكم % % إلى ساكن البلد الشاسع % % PageV01P2783 21(@)(@@) % وقام الخطيب بإحسانكم % % على منبر المسجد الجامع % % 22(@)(@@) % يشيع شقائي بحرمانكم % % وشكري مع الشائع الذائع % % 23(@)(@@) % ألا ليت شعري قول امرىء % تراخت مثوبته جازع % % 24(@)(@@) % إذا أنا أخطأني نفعكم % فهل بعدكم لي من نافع % 25(@)(@@) % سيجري على مثل مجراكم % أخو ثقتي جري لا نازع % % 26(@)(@@) % وأي البرية لا يقتدي % % بأفعالكم غير ذي وارع % % 27(@)(@@) % فلله ماذا جنت سادة % على خادم لهم خاضع % 28(@)(@@) % حموه المعاش وأسبابه % % وهم خير مزدرع الزارع % % 29(@)(@@) % أيحسن رفعي بكم صرختي % % أهل هل عن الظلم من رادع % % 30(@)(@@) % وقد طبق الأرض إنصافكم % % فعم المطيع مع الخالع % % PageV01P2784 31(@)(@@) % ألا لا تكن قصتي سبة % فما ذكر مثلي بالخاشع % % 32(@)(@@) % قبيح لدى الناس أن ترتعوا % % وأن لا يروني مع الراتع % % 33(@)(@@) % وأن تشرع الدهم في بحركم % % وأن لا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms637# يروني مع الشارع % % 34(@)(@@) % وأن تترأس حثالة % % بكم ويروني مع التابع % % 35(@)(@@) % فلا تضعوا عاليا ربما % % جنى وضعه ندم الواضع % % 36(@)(@@) % يراجع بعض روياته % % وقد وقعت صفقة البائع % % 37(@)(@@) % فتوحشه جورة جارها % % فشاعت مع الخبر الشائع % % 38(@)(@@) % ويأسى على مدح المستمر % ر بالحمد والشكر لا الظالع % % 39(@)(@@) % وحسب أخي الظلم من غفلة % بمكوى ملامته اللاذع % 40(@)(@@) % ألا من لمن طردته الغيو % % ث عن موقع السبل الهامع % PageV01P2785 41(@)(@@) % ألا من لمن وكلته البحا % % ر ظلما إلى الوشل الدامع % 42(@)(@@) % أقاسم يا قاسم العارفا % % ت يا كوكب الفلك الرابع % 43(@)(@@) % أعزمك أنك إن أنت صر % ت في ذروة الفلك السابع % 44(@)(@@) % وجاوزته ساميا ناميا % إلى ثامن وإلى تاسع % 45(@)(@@) % جريت على نهج ذاك الرضا % % بضيق القناعة للقانع % % 46(@)(@@) % أبى الله ذاك وأن العلا % % نمتك إلى الفارع الفارع % % 47(@)(@@) % أعيذك من نائل حائل % ومن بادئ ليس بالراجع % % 48(@)(@@) % أيشبع مولى وعبد له % % يجوع مع الجائع النائع % % 49(@)(@@) % جمالك ياذا السنا بارع % فصله بإجمالك البارع % % 50(@)(@@) % وزد في ارتفاعك فوق الورى % % بأن تتواضع للرافع % % PageV01P2786 51(@)(@@) % بذلت من القوت لي عصمة % فأوسع علي من الواسع % % 52(@)(@@) % وما لي وإن كنت ذا حرمة % سوى طيب خيمك من شافع % 53(@)(@@) % على أن لي شغلا شاغلا % بعتبك ذي الموقع القارع % 54(@)(@@) % أقول وقد مسني حده % % مقال الذليل لك الباخع % % 55(@)(@@) % ضربت بسيفك يا ابن الكرا % % م غير الشجاع ولا الدارع % % 56(@)(@@) % فصلني بعفوك إني أرا % % ه أكبر من ضرع الضارع % % 57(@)(@@) % وهب حسن رأيك لي محسنا % ليهجع ليلي مع الهاجع % % 58(@)(@@) % فما بعد رأيك من منية % وما بعد عتبك من لائع % % 59(@)(@@) % إذا ما الفجائع بقين لي % % رضاك فما الدهر بالفاجع % % 60(@)(@@) % رضاك ظلال جنانية % وعتبك كاللهب السافع % % PageV01P2787 61(@)(@@) % صدقتك في كل ما قلته % يمينا وما كذب الطائع % % 62(@)(@@) % فإن كان قولي فيما ترا % % ه من خدع الراقىء الراقع % % 63(@)(@@) % فسامح وليك إن الكري % % م قد يتخادع للخادع % % PageV01P2788 البحر : - 1(@)(@@) % إذا أولي النعمى دعا الله أن يرى % % بأصحابها يوم اختبار الصنائع % 2(@)(@@) % فلله ما أغناهم عن جزائه % % إذا كان مقرونا بيوم الفجائع % % PageV01P2789 البحر : - 1(@)(@@) % غن أبا حفص إذا جئته % % بشعره في بإيقاع % 2(@)(@@) % وليكن الإيقاع في رأسه % % من حاذق بالقفد صفاع % PageV01P2790 البحر 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms638# : - 1(@)(@@) % أغر مخيلات الأماني لموعها % % وأشقى نفوس الشائميها طموعها % % 2(@)(@@) % دعتنا إلى حمد الرجال وذمهم % % هموع سحابات لهم ودموعها % % 3(@)(@@) % وللدهر فينا قسمة عجرفية % % على السخط والمرضاة منا وقوعها % % 4(@)(@@) % فهيماء في ضحل السارب كروعها % % وهيماء في بحر الشراب كروعها % % 5(@)(@@) % وسافلة يزرى عليها سفولها % % ويافعة يزرى عليها يفوعها % % 6(@)(@@) % وفي هذه الدنيا عصائب لم تزل % % لخطة ضيم لا لحق خنوعها % % 7(@)(@@) % فلا في الهنات المحفظات إباؤها % % ولا في الحقوق الواجبات بخوعها % % 8(@)(@@) % فلا يأمنوا وليحذروا غب أمرهم % % فبغي الجدود العاليات صروعها % % 9(@)(@@) % ومن أمن نفس أن تخاف ولم يكن % % لتأمن من مكروهة لا تروعها % % 10(@)(@@) % سينفر من أمن العواقب آمن % بلا من مناه ما جناه خدوعها % % PageV01P2791 11(@)(@@) % وللناس أفعال يجازى مدادها % % وللدهر أحوال يكايل صوعها % % 12(@)(@@) % لعل ذرى تهوي وعل أسافلا % ستعلو وخفاض المباني رفوعها % % 13(@)(@@) % فكم من جدود ذل منها عزيزها % % وكم من جدود عز منها ضروعها % % 14(@)(@@) % ألا أبلغا عني العلاء بن صاعد % % رسالة ذي نفس قليل هلوعها % % 15(@)(@@) % فإن تحتجز فالله جم عطاؤه % % وإن تحتجب فالشمس جم طلوعها % % 16(@)(@@) % أبت نفسك المعروف حتى تبتلت % % إلى اليأس نفس واطمأن مروعها % % 17(@)(@@) % ولكنكم لا تبطنون محبة % لنخلتكم ماسح أرضا صقوعها % % 18(@)(@@) % فقد عزفت عن كل ما كنت أبتغي % % لديك فأمسى كبرياء خضوعها % % 19(@)(@@) % سأظلف من نفس بذلت سجودها % % وكان حقيقا أن يصان ركوعها % % 20(@)(@@) % هي النفس أغنتها عن الدهر كله % % قناعتها إذ لم يفتها قنوعها % % PageV01P2792 21(@)(@@) % عفاء على الدنيا إذا مستحقها % % بغاها ومن تبغى لديه منوعها % % 22(@)(@@) % جزتكم جوازي الشريا آل مخلد % وأقوت من النعمى عليكم ربوعها % % 23(@)(@@) % ولا انفرجت عنكم من الكره خطة % ولا التأمت إلا عليكم صدوعها % % 24(@)(@@) % ولا صمدت إلا إليكم ملمة % ولا كان فيكم يوم ذاك دفوعها % % 25(@)(@@) % ليهنيكم أن ليس يوجد منكم % لبوس ثياب المجد لكن خلوعها % % 26(@)(@@) % وأن ركايا الماء فيكم جرورها % % إذا كان في القوم الكرام نزوعها % % 27(@)(@@) % نظرنا فأجدى من عطاياكم المنى % % وأندى على الأكباد منهن جوعها % % 28(@)(@@) % وجدناكم أرضا كثيرا بذورها % % رواء سواقيها قليلا ريوعها % % 29(@)(@@) % فلا بوركت عين تسيح لسقيها % % كما لم تبارك في الزروع زروعها % % 30(@)(@@) % جهدناكم مريا فقال ذوو النهى % % لقد أشبهت أظلاف شاة ضروعها % % PageV01P2793 31(@)(@@) % ألا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms639# لا سقى الله الحيا شجراتكم % % إذا ما سماء الله صاب هموعها % % 32(@)(@@) % فما بردت للاغبين ظلالها % % ولا عذبت للسائغين نبوعها % % 33(@)(@@) % أبت شجرات أن تطيب ثمارها % % وقد خبثت أعراقها وفروعها % % 34(@)(@@) % نكحتم بلا مهر قوافي لستم % بأكفائها فاللائعات تلوعها % % 35(@)(@@) % رويدكم لا تعجلوا ورويدها % % ستغلو لدى قوم سواكم بضوعها % % 36(@)(@@) % ستمهر أبكاري إذا وخدت بها % % خنوف المهاري بالفلا وضبوعها % % 37(@)(@@) % وإني إذا ما ضقت ذرعا ببلدة % لجواب أقطار البلاد ذروعها % % 38(@)(@@) % وليس القوافي بالقوافي إن اتقى % % هجوعكم عن حقها وهجوعها % % 39(@)(@@) % وليس بأشباه الأفاعي عرامة % متى لم يطل بالعيث فيكم ولوعها % % 40(@)(@@) % وكانت إذا أبدت خشوعا فخيبت % % أبى عزها أن يستقاد خشوعها % % PageV01P2794 41(@)(@@) % ومن لم تجد في فضل كفيه مرتعا % ففي عرضه لا في سواه روعها % % 42(@)(@@) % ألا تلكم الغيد العطابيل أصبحت % إلى غيركم أرشاقها وتلوعها % % 43(@)(@@) % عذارى قواف كالعذارى خريدها % % يقود الفتى نحو الصبا وشموعها % % 44(@)(@@) % كسوناكم منها ونحن بغرة % مدائح لم تغبط بربح بيوعها % % 45(@)(@@) % وكم نزعت منا إليكم مطامع % فأضحت وعنكم لا إليكم نزوعها % % 46(@)(@@) % لقد ضللت وجناء باتت وأصبحت % % يهز إليكم رحلها وقطوعها % % 47(@)(@@) % قضى ربها أن لا تحل نسوعها % % يد الدهر إذ شدت إليكم نسوعها % % 48(@)(@@) % تسربلتم النعمى فطال عثاركم % % بأذيالها واسود منها نصوعها % % 49(@)(@@) % وما عطرت أثوابها إذ علتكم % ولا حسنت في عين راء دروعها % % 50(@)(@@) % ولم تظلموا أن تعقروا في ملابس % مذيلة أبواعكم لا تبوعها % % PageV01P2795 51(@)(@@) % على أنكم طلتم بحظ علائكم % % فلج بعيدان لئام منوعها % % 52(@)(@@) % بسقتم بسوق النخل ظلما فأبشروا % % ستسموبكم عما قليل جذوعها % % 53(@)(@@) % وقلتم رجحنا بالرجال بحقنا % % وأي رجال لم تزنكم شسوعها % % 54(@)(@@) % وهل أنتم إلا مذيعو مناسب % ترد عليكم ما ادعاه ذيوعها % % 55(@)(@@) % أحلكم ورهاء يرذم أنفها % % فيمخطها من شدة الموق كوعها % % 56(@)(@@) % مفكك أوصال معلل فقحة % عضوض بسفلاه الأيور بلوعها % % 57(@)(@@) % ضعيف اللتيا في الدماغ سخيفها % % قوي اللتيا في الحتار لذوعها % % 58(@)(@@) % يلاحظ دنياه فأحلى متاعها % % طواميرها في عينه وشموعها % % 59(@)(@@) % وما عدمت وجعاء عبدون سلحة % ولا طهرت إلا وفحل يقوعها % % 60(@)(@@) % أنوفكم أعني بما قلت آنفا % بني مخلد حي الأنوف جدوعها % % PageV01P2796 61(@)(@@) % أفدتم ثراء فاستفدتم عروبة % وقد فضح الأنساب منكم شيوعها % % 62(@)(@@) % وإن بيوت البدو لو تصدقوننا % % لأبنية 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms640# ما ظللتكم نطوعها % % 63(@)(@@) % ولو أنكم كنتم دهاقين سادة % % لما راقكم جوع العريب ونوعها % % 64(@)(@@) % أبت ذكر حزوى منكم واشتياقكم % % إليها قلوب ذكر جوخى يضوعها % % 65(@)(@@) % فديتم بني وهب فإني رأيتهم % % أبوا قذعة يحتج فيها قذوعها % % 66(@)(@@) % وأقنعهم من مدهم ما كفاهم % وأعلى نفوس الراغبين قنوعها % % 67(@)(@@) % وما درك الدهقان في قيل قائل % ألا ذاك خصاف النعال رقوعها % % 68(@)(@@) % ألا ذاك بناء الحياض ورودها % % ألا ذاك حلاب اللقاح رضوعها % % 69(@)(@@) % وإن كان في عدنان نور نبوة % فروج لظلماء الضلال صدوعها % % 70(@)(@@) % ومن حكمها لعن الدعي وثلبه % % إذا واصل الأرحام عد قطوعها % % PageV01P2797 71(@)(@@) % أرى سقم الدنيا بصحة حظكم % % شفى داءها ضرارها ونفوعها % % 72(@)(@@) % وهذا أبو العباس حيا مؤملا % ضروب الرؤوس الطامحات قموعها % % 73(@)(@@) % فتى من بني العباس كهل جلاله % % ركوب لأشراف النجاد طلوعها % % 74(@)(@@) % فروق لألباس الأمور فصولها % % ضموم لأشتات الأمور جموعها % % 75(@)(@@) % ولله والأيام فيه وديعة % تداوى بها البلوى وشيك نجوعها % % 76(@)(@@) % وما برحت في كل حال تسوسها % % له شيم زهر المحاسن روعها % % 77(@)(@@) % فصبرا لأيام له سترونها % % يطول عليكم أيها القوم سوعها % % 78(@)(@@) % وقد شمتم منه ومن أوليائه % % بوارق لم يخلف هناك لموعها % % 79(@)(@@) % ألا تلك آساد الشرى وبروزها % % فدتها خنازير القرى وقبوعها % % 80(@)(@@) % بدوا وحجرتم ظالمين بني استها % % فبتم وفي الأستاه منكم كسوعها % % PageV01P2798 81(@)(@@) % وما يستوي في الطير صقر وهامة % لعمري ولا شحاجها وسجوعها % % 82(@)(@@) % جمحتم إلى القصوى من الشر كله % % وللدهر فيكم روعة سيروعها % % 83(@)(@@) % وأبطركم أكل الحرام فأمهلوا % % لكل أكول هوعة سيهوعها % % 84(@)(@@) % كأن قد دسعتم بالخبيث ولم تزل % % لكم دسعات لا يسقى دسوعها % % 85(@)(@@) % ستكسع منكم دولة حان بينها % % بدولة صدق قد أظل رجوعها % % 86(@)(@@) % نقوم بها من آل وهب عصابة % تحنت على نصح الملوك ضلوعها % % 87(@)(@@) % لهم دولة منصورة بفعالهم % % أبى النصر أن تنفض عنها جموعها % % 88(@)(@@) % تقدمهم في كل فضل سيوفها % % ومعروفهم في كل أزل دروعها % % 89(@)(@@) % هنالك يشفى من صدور غليلها % % إذا ما الدواهي طال فيكم شروعها % % 90(@)(@@) % أرتني سعودي ذلك اليوم أنه % % برود نفوس حلئت ونقوعها % % PageV01P2799 91(@)(@@) % ولا رقأت إبان ذاك دماؤهم % % ولا أعين فاضت عليكم دموعها % % 92(@)(@@) % منحتكموها شكم نفس أبية % قليل عن الطاغي الأبي كيوعها % % 93(@)(@@) % فدونكم شوهاء فوهاء صاغها 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms641# % % مشوه أقوال وطورا صنوعها % % 94(@)(@@) % وما كنت قوال الخنا غير أنني % % قؤول التي تشجي اللئيم سموعها % % 95(@)(@@) % رؤوم صفاة أنبتت وتفجرت % % رجوم صفاة أصلدت وقروعها % % 96(@)(@@) % وإني لمناح الأنوف تحيتي % % فإن جهلت حقي فعندي نشوعها % % 97(@)(@@) % فإن شمخت من بعد ذاك فإنني % % قذوع لآناف قليل قذوعها % % 98(@)(@@) % بحد جرت جري الرياح فأصبحت % % سطوع حياء النيرين سطوعها % % 99(@)(@@) % فمن صد من نفاحها وبرودها % % فعندي له لفاحها وسفوعها % % 100(@)(@@) % وإني لطلاب التي أنا أهلها % % وغيري إذا ولت قفاها تبوعها % % PageV01P2800 101(@)(@@) % وما أنا في حال العطايا فروحها % % وما أنا في حال البلايا جزوعها % % 102(@)(@@) % لقد سرت الدنيا وضرت جناتها % % فمجاجها للقوم أريا لسوعها % % 103(@)(@@) % فلا تأس للدنيا ولا تغتبط بها % % فوهابها سلابها وفجوعها % % PageV01P2801 البحر : - 1(@)(@@) % أيرضى الأمير أطال الإله % % بقاء الأمير عزيزا مطاعا % % 2(@)(@@) % بأن فل حرمانه مقولي % % فأحذاه بعد المضاء انقطاعا % % 3(@)(@@) % وكانت قوافي في مدحه % % مئين فقد صرن فيه رباعا % % 4(@)(@@) % وما كان إلا حساما أضيع % % ومهما أضيع من الأمر ضاعا % % 5(@)(@@) % فلو شاء صيقله رده % % جديدا وولاه كفا صناعا % % 6(@)(@@) % تعيد شباه إلى حاله % % وتلقى على صفحتيه شعاعا % % 7(@)(@@) % ليوم تقنع فيه الرجال % % وتحسر فيه النساء القناعا % % PageV01P2802 البحر : - 1(@)(@@) % راع فؤادي منك ما راعه % ولاعه صدك ما لاعه % 2(@)(@@) % أمرضت قلبي ثم ماعدته % % كلا ولا داويت أوجاعه % 3(@)(@@) % يا مالكا قلبي وتعذيبه % مهلا فما ملكت إقلاعه % 4(@)(@@) % ته عند تمليكك تخليصه % % أو عند إحسانك إمتاعه % % 5(@)(@@) % حق لك الكبر على عاشق % نارك في جنبيه لذاعه % 6(@)(@@) % لو كنت قد ملكت إنقاذه % % منك كما ملكت إيقاعه % 7(@)(@@) % يا ناقص القدرة كم غية % ليست لها نفس بتياعه % 8(@)(@@) % لا تحسبني للهوى طعمة % إن استجاش الرأي أشياعه % % 9(@)(@@) % أنا الذي إن شئت هان الهوى % % خوف أو أطمع إطماعه % 10(@)(@@) % يا عجبا من شنطف إنها % % أضحت تغني غير مرتاعه % % PageV01P2803 11(@)(@@) % ما أصفق الوجه الذي أعطيت % ساق إليه الخزي أنواعه % % 12(@)(@@) % ألق إليها أذنا واستمع % % أبرد ما غنته كراعه % % 13(@)(@@) % وأمر لها ثم برومية % للرقص والإيقاع جماعه % 14(@)(@@) % رقاصة في البطن كبادة % موقعة في الرأس صفاعه % 15(@)(@@) % تعسا لها تعسا إذا ما عوت % ونزعة للنفس نزاعه % 16(@)(@@) % تفسو فما تنفك عن فسوها % % دواخن في البيت منباعه % 17(@)(@@) % دحداحة الخلقة 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms642# حدباؤها % % قامتها قامة فقاعه % % 18(@)(@@) % قصيرة القامة مقصوعة % للقمل فوق الطبل قصاعه % % 19(@)(@@) % تطفرها من قصر فأرة % وبظرها يتعب ذراعه % % 20(@)(@@) % مشؤومة للخير حصادة % لكنها للشر زراعه % % PageV01P2804 21(@)(@@) % تضل في السربال من قلة % % كصعوة في جوف قفاعه % % 22(@)(@@) % وعواعة البطن فإن رجعت % % يوما غناء فهي وعواعه % % 23(@)(@@) % لو أنها ملكي ولي ضيعة % نصبتها للطير فزاعه % % 24(@)(@@) % أقبح بذاك الخلق من منظر % وزع فيه القبح أوزاعه % 25(@)(@@) % بالحمق والغلمة مصروعة % بالإبط والنكهة صراعه % 26(@)(@@) % لا تعرف الله ولكنها % % سجادة للأير ركاعه % 27(@)(@@) % منيتها أير عريض القفا % % مضلع تغمز أضلاعه % 28(@)(@@) % حتى إذا قام على سوقه % % سدت به ثقبة بلاعه % % 29(@)(@@) % لها حر أشمط متكرش % شاب وما تترك إرضاعه % % 30(@)(@@) % تجهد أن تشبعه دهرها % % لو أنها تستطيع إشباعه % % PageV01P2805 31(@)(@@) % منقلب الشفرين مستضحك % ما هو إلا جيب دراعه % % 32(@)(@@) % نوسعها ذما على أنها % % بذالة ليست بمناعه % % 33(@)(@@) % تقتل بالبذل فاعجب بها % % ضرارة في زي نفاعه % % 34(@)(@@) % كم عصت الله وما أحسنت % فقحتها شيئا سوى الطاعه % % 35(@)(@@) % خفاضة للرأس لكنها % % لرجلها والردف رفاعه % % 36(@)(@@) % قد لمعت من برص واضح % مؤزر في الوجه لماعه % % 37(@)(@@) % لو عرضت شيراز صوارها % % وعينها لانتابها الباعه % % 38(@)(@@) % صفعانة تأخذ من رأسها % % لطيزها في الفسق رتاعه % % 39(@)(@@) % مبتاعة دفعا بصفع ألا % % قبحها الرحمن مبتاعه % 40(@)(@@) % ترقع من فروتها صدعها % % وحيلة الإنسان رقاعه % PageV01P2806 41(@)(@@) % قلت لداعي الشعر في شتمها % % مهلا فقد أبلغت إسماعه % 42(@)(@@) % ستسمع الآذان في شنطف % قوافيا للجهل رداعه % 43(@)(@@) % ليست عن الثأر بنوامة % ولا عن الوتر بهجاعه % % 44(@)(@@) % إن صكت الوجه فسفاعة % أو صكت الرأس فقماعه % % 45(@)(@@) % يا من تغنينا بما ساءنا % % دونكها للأنف جداعه % % 46(@)(@@) % أسمعتنا سوءا فأسمعته % % فاستمعي إن كنت سماعه % % PageV01P2807 البحر : - 1(@)(@@) % أبا علي للناس ألسنة % إن قلت قالوا بها ولم يدعوا % % 2(@)(@@) % والبغي عون على المدل به % % فأشنأه واجعله بعض ما تدع % 3(@)(@@) % أولا فكن راميا وكن غرضا % ترمي وترمى وتحصل الشنع % % 4(@)(@@) % وقالة السوء غير راجعة % يوما إذا نوهت بها السمع % % 5(@)(@@) % يا ليت شعري وليت شعرك إن % % قلت وقلنا واستحكم القذع % % 6(@)(@@) % ما ينفع الصارم اللسان إذا % % غودر يوما وعرضه قطع % 7(@)(@@) % لا نفع في ذاك إن نظرت وإن % % قوم منك الحياء والورع % 8(@)(@@) % فارجع وبقيا أخيك باقية % واندم 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms643# وفي الحلم فسحة تسع % % 9(@)(@@) % أو لا فأيقن بأنني رجل % تكثر فيما يقوله البدع % % 10(@)(@@) % والشهد عندي لمن أناب بما % % ء المزن أو لا فالصاب والسلع % PageV01P2808 11(@)(@@) % وقد هجوت امرءا يجل عن ال % % مدح وعندي الحفاظ لا الجزع % % 12(@)(@@) % ومن هجا ماجدا أخا شرف % فليس إلا من نفسه يضع % 13(@)(@@) % والنبل مبرية منصلة % يحفزهن القسي والشرع % 14(@)(@@) % وكل سهم رمت يداي به % % فليس إلا في مقتل يقع % % 15(@)(@@) % فلا تعد بعدها لذكر أبي % % بكر ولا تخدعنك الخدع % % 16(@)(@@) % فوالذي تسجد الجباه له % % ما بعدها في هوادتي طمع % % 17(@)(@@) % ذلك عرض أبيت لا بل أبى ال % % له له أن يمسه طبع % 18(@)(@@) % ودونه نصرة مؤيدة % مني ولي بالحفاظ مضطلع % 19(@)(@@) % والظلم مخذولة كتائبه % تضرب أدبارها وتكتسع % 20(@)(@@) % والحق منصورة حلائبه % % تكثر أعوانه ويتبع % PageV01P2809 21(@)(@@) % أنذرت حرب الهجاء ملقحها % % فما لها غير حتفه ربع % % 22(@)(@@) % وليس فيها الرؤوس تندر بل % % فيها أنوف الرجال تجتدع % % 23(@)(@@) % ذاك مقام كما سمعت به % % محاسن القوم فيه تنتزع % % 24(@)(@@) % وليس فيه شيء تراه سوى ال % % أعراض دون النفوس تدرع % % 25(@)(@@) % والعيش بعد الممات مرتجع % وليس عرض يودي فيرتجع % % 26(@)(@@) % ونحن في منظر ومستمع % ما مثله منظر ومستمع % % 27(@)(@@) % فليتزع بالعظات متزع % ما دام يجدي عليه متزع % % 28(@)(@@) % إياك أن يستنير مني أق % % دامك صلا في رأسه قرع % % 29(@)(@@) % قد جف واديه من تنفسه % % فما به في الربيع مرتبع % 30(@)(@@) % لا ماء فيه ولا نبات وهل % % خصب بوادي البوار أو مرع % PageV01P2810 31(@)(@@) % إياك إياك أن تطيف به % % وإن تداعت لنصرك الشيع % 32(@)(@@) % فرب إقدام ذي مخاطرة % أحزم منه النكوص والهلع % 33(@)(@@) % لا تنتجع صيفة لها وهج % حام فما في المصيف منتجع % 34(@)(@@) % ولا تزعزع حلمي وتأمل أن % % ترسو إن الجبال تقتلع % % 35(@)(@@) % فليس حلمي حلما يبلغني الذ % ذل وإن كان فيه متسع % 36(@)(@@) % وليس جهلي جهلا يبلغني الظ % % ظلم وإن كان فيه ممتنع % 37(@)(@@) % أنا الذي ليس في مغامزه % % لين ولا في قناته خضع % 38(@)(@@) % أنا الذي لا يذل صاحبه % % ولا يرى في وليه ضرع % 39(@)(@@) % أنا الذي تحشد الرواة له % % فكل أيام دهره جمع % 40(@)(@@) % أنا الذي ليس في حكومته % % جور ولا في طريقه ضلع % PageV01P2811 41(@)(@@) % وأنت بكر على 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms644# الهجاء فصن % عرضك إن الأبكار تفترع % % 42(@)(@@) % قارعت قبلي معاشرا قرعا % فازت فخف أن تخونك القرع % 43(@)(@@) % وذقت من غير موردي جرعا % ساغت فخف أن تغصك الجرع % % 44(@)(@@) % متى تعاطيت جرع واحدة % من موردي فالشجا له تبع % 45(@)(@@) % فلا تجرب على الحياة فما % % كل التجاريب فيه منتفع % % 46(@)(@@) % وما تعديت بل ردعتك بال % % وعظ وللصالحين مرتدع % % 47(@)(@@) % وأنت ممن يهاب معصية ال % % حق ولا يستخفه الفزع % % 48(@)(@@) % وفي القوافي لقائل سعة % إن شئت والدهر بيننا جذع % % 49(@)(@@) % وقد عرفت القريض أصلحك ال % % له وفيه الأغلال والخلع % 50(@)(@@) % فاجتنب الشر فهو مجتنب % واتبع الخير فهو متبع % PageV01P2812 البحر : - 1(@)(@@) % أصل نما بك ربه فرعه % من بعدما التمس العدى قلعه % 2(@)(@@) % يا من تجلت للوجود به % % بعد السواد تشوبه سفعه % 3(@)(@@) % ما ينقم الحساد منك سوى % % أمن شننت عليهم درعه % 4(@)(@@) % بل عز مثلك لا كفاء له % % بنيت بعد حفوفه ربعه % % 5(@)(@@) % ملك شروه من عدوهم % سفها فكنت أحق بالشفعه % % 6(@)(@@) % ورياسة كانت مطلقة % منهم فكنت أحق بالرجعه % % 7(@)(@@) % يا آخرا أضحى لأوله % % كالسجدة اتصلت بها الركعه % % 8(@)(@@) % قد قلت حين ملكت أمرهم % % شمل أراد مليكهم جمعه % % 9(@)(@@) % يا من إذا دعي المديح له % % لبى الدعاة وجاء في سرعه % % 10(@)(@@) % هنئت ما أوتيت مغتبطا % بمزيد رب شاكرا صنعه % % PageV01P2813 11(@)(@@) % وفيت حق الشرطتين وما % % وفيت حقك لا ولا ربعه % % 12(@)(@@) % لكنها باكورة بكرت % مما نؤمل فانتظر ينعه % 13(@)(@@) % واسلم على ريب الحوادث ما % % سجع الحمام مرجعا سجعه % 14(@)(@@) % الآن نام الخائفون وما % % كانت تذوق عيونهم هجعه % 15(@)(@@) % لم تمس عين الله راعية % % أحدا يبيت وأنت لم ترعه % 16(@)(@@) % أضحى عبيد الله سيدنا % % في المجد وترا لا يرى شفعه % 17(@)(@@) % يغري خطوب الدهر منصلتا % كالسيف أحمد ضارب وقعه % % 18(@)(@@) % يقع الربيع وجود سيدنا % % فإليه تصرف دونه النجعه % % 19(@)(@@) % جود يزيد الله صاحبه % % وثوابه المذخور لا السمعه % % 20(@)(@@) % وله إذا ما الرأي حيره % % خطب يشنع ورده قرعه % % PageV01P2814 21(@)(@@) % رأي كأن الدهر أطلعه % % من سر كل خفية طلعه % % 22(@)(@@) % فتاق ما يعيا الدهاة به % % رتاق مالم يرتقوا صدعه % % 23(@)(@@) % كم غبطة لمعاشر صدرت % عنه وكم لمعاشر فجعه % % 24(@)(@@) % فالناس طرا بين مرتقب % سطواته ومؤمل نفعه % % 25(@)(@@) % كالعارض التهبت صواعقه % % وسقى البلاد 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms645# فلم يدع بقعه % 26(@)(@@) % أحذاه عبدالله شيمته % % والأصل يسقي ماؤه فرعه % 27(@)(@@) % يندى ويصلب عوده فترى % % لدن المهزة صادق المنعه % 28(@)(@@) % كالخيزران لعاطفيه وإن % % عجمته نائبة فكالنبعه % 29(@)(@@) % ملك يباشر ناره صرد % فتظل مدفئة بلا لذعه % % 30(@)(@@) % فإذا اصطليت حريقه بطرا % فهناك لست بآمن سفعه % % PageV01P2815 31(@)(@@) % متسربل حلما بطانته % % عز وليس بكائن فقعه % % 32(@)(@@) % يحيي ويردي وهو مقتدر % حلو المجاجة قاتل السبعه % % 33(@)(@@) % فعال منقذة ومهلكة % قوال مثلهما بلا قذعه % % 34(@)(@@) % لا يرأم العوراء منطقه % % كلا وليس يعيرها سمعه % % 35(@)(@@) % يسع الجسيم من الفعال وما % % يرضى نداه لقدره وسعه % 36(@)(@@) % وأتى الأمير لقد جرى فسعى % % مسعاه غير مطالع طلعه % 37(@)(@@) % وجرى أبو العباس يتبعه % % سعيا فقال ألا كذا فاسعه % % 38(@)(@@) % ولد أقر لعين والده % طالت لوالده به المتعه % 39(@)(@@) % وزعت يداه ما يحاذره % % من دهرنا فأجادتا وزعه % 40(@)(@@) % لم يرع سرح الملك رعيته % % راع ولا قمع العدى قمعه % PageV01P2816 41(@)(@@) % عجبا لطائفة تقيس به % % من لا يوازنه ولا شسعه % % 42(@)(@@) % أنى تقاس شعيلة خمدت % بالشمس في الإشراق والرفعه % % 43(@)(@@) % قوم بغوا بيقينهم بدلا % ممن أبت سقطاته رفعه % % 44(@)(@@) % مستبطني ضغن له وبه % % رفعوا جنوبهم من الصرعه % % 45(@)(@@) % وعليهم للعز أبهة % من بعد ما رهقتهم الخشعه % % 46(@)(@@) % مالوا بودهم إلى رجل % جعل البوار لأهله شرعه % % 47(@)(@@) % طالت به عثراته فكبا % % وكبوا وكل راكب ردعه % % 48(@)(@@) % يهوون في أهوية قذف % من يمن صاحبه بها ينعه % % 49(@)(@@) % حتى تداركهم فأنقذهم % % صلت الجبين مبارك الطلعه % % 50(@)(@@) % لو قارع الأكفاء كلهم % عن سؤدد وقعت له القرعه % % PageV01P2817 51(@)(@@) % فجزوه أن حفروا له حفرا % جذب المهيمن دونها ضبعه % 52(@)(@@) % وأبيهم ما كان ريعهم % لأخيهم بمشاكل زرعه % 53(@)(@@) % إن المريد بمثله بدلا % لكن يريد بدرة ودعه % 54(@)(@@) % يا زينهم إذ كان أشأمهم % % شينا وليس الأنف كالسلعه % % 55(@)(@@) % شهدوا غداة رقعت وهيهم % أن قد أجدت ولم تسىء رقعه % % 56(@)(@@) % يا بيهقي دع القريض لذي % % حذق يعاون علمه طبعه % 57(@)(@@) % فادفن سلاحا ظلت تسلحه % % من فيك لا استك دفعة دفعه % 58(@)(@@) % أخطأت في المصراع مفتتحا % وأتيت إذ عجزته بدعه % % 59(@)(@@) % سكنت ميما غير ساكنة % وجعلت ربك أنجما سبعه % % 60(@)(@@) % حكمتها في من لو انتظمت % تاجا لقل لمثله خلعه % % PageV01P2818 61(@)(@@) % وزعمت سيدنا الأمير سما % % بالجود حتى صافح الهقعه 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms646# % % 62(@)(@@) % وهو الذي أدنى مواطئه % % فوق الذي سميت والهنعه % % 63(@)(@@) % وجعلت أقصى ما تجود به % % للمستميح نواله الجرعه % % 64(@)(@@) % ثلط على ثلط وضعت به % % ووضعت بعد هدائل القصعه % 65(@)(@@) % من كان مثلك في جماعته % % أضحى وقيمة رأسه قرعه % 66(@)(@@) % وشكوت جوعك في ذرى ملك % فنقضت مدحك فيه بالشنعه % 67(@)(@@) % أقبلت تشكو في ضيافته % % طول الطوى متمنيا نجعه % % 68(@)(@@) % كذبا عليه بعد زعمكه % % نصب الجفان بربوة تلعه % % 69(@)(@@) % أقبح بإفك في مناقضة % كالنبذة الشمطاء في الصلعه % % 70(@)(@@) % وحكيت أنك مذ أطفت به % % في عيشة تقتاتها لمعه % PageV01P2819 71(@)(@@) % وزعمت صرتك اغتدت عطلا % لا درهم فيها ولا قطعه % % 72(@)(@@) % وهو الذي يضحي مجاوره % % من جنة الفردوس في ترعه % % 73(@)(@@) % وجعلت ذكر الصفع خاتمة % مسترزقا من صافع صفعه % % 74(@)(@@) % فثواب مثلك صفع أخدعه % % بل بصقة في الوجه بل نخعه % % 75(@)(@@) % ما زلت في معنى يحاك وفي % % لفظ يساء كقولك الضبعه % % 76(@)(@@) % وذكرت رهطا تسعة جدعوا % % أنف الفتيل فأوعبوا جدعه % % 77(@)(@@) % فجعلت صاحبهم طويسا وما % % لاقى طويس أولئك التسعه % 78(@)(@@) % أفلا قدار جعلت تاسعهم % % كسع است قاطع زبرها كسعه % 79(@)(@@) % وذكرت بالحولاء بحربة % % ونعتها فجعلتها ربعه % 80(@)(@@) % وجعلت تحفتها مغازلة % لك أن تقول مجيبة نزعه % % PageV01P2820 81(@)(@@) % ووصفت كأسا لا يشاكلها % % فجعلتها صهباء كالدمعه % % 82(@)(@@) % لا دمعة صهباء نعلمها % % إلا دم استك خاضبا فصعه % % 83(@)(@@) % ووصفت ضوء الصبح محتفلا % فجعلته كإضاءة الشمعه % % PageV01P2821 البحر : - 1(@)(@@) % يا أبا الصقر زادك الله في ال % % مجد علوا وفي المكارم باعا % % 2(@)(@@) % مع أن قد علوت في المجد حتى % % لم تدع فيه مبلغا مستطاعا % % 3(@)(@@) % أنت شمس أضاءت الشرق والغر % % ب وأضحى لها إلينا شعاعا % % 4(@)(@@) % بك عادت آمالنا وهي آما % % ل وقد كن مرة أطماعا % % 5(@)(@@) % شهد الله والخليفة والنا % % س جميعا شهادة إجماعا % % 6(@)(@@) % أنك الكاتب الذي يأمن السلطا % % ن منه إضاعة واقنطاعا % % 7(@)(@@) % والجواد الذي إذا نال حظا % لم يكن عند نيله مناعا % % 8(@)(@@) % تجمع الفيء للخليفة جمعا % لا يشذ الفتيل منه ضياعا % % 9(@)(@@) % وإذا ما أخذت سهمك منه % % لم تكن عند أخذه جماعا % % 10(@)(@@) % أبت الجمع منك روحاء من % % كفيك تزداد ما حييت اتساعا % % PageV01P2822 11(@)(@@) % هي خرقاء حين تعطي وكانت % % حين تستخرج الخراج الصناعا % % 12(@)(@@) % عجبا من يديك والفيء أنى % % يجمعان 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms647# الشتيت منه الشعاعا % % 13(@)(@@) % وهما آفتان للمال حتم % منهما أن يكون نهبا مشاعا % % 14(@)(@@) % ضلة للمهنيك بأن ول % يت ما تستحقه إقطاعا % % 15(@)(@@) % أنت أعلى من أن يقول لك القا % % ئل يهنيك أو وليت الضياعا % % 16(@)(@@) % ولأولى بأن يهنئك النا % % س ضياع حفظتها الرعاء من أن تضاعا % % 17(@)(@@) % ورعايا حميتها بعد أن % % شارك في حفظها الرعاء السباعا % % 18(@)(@@) % فهنيئا لمن رعيت هنيئا % آمن لله سربهم أن يضاعا % % 19(@)(@@) % وهنيئا لك الثواب إذا هن % % نىء وال بأن أصاب متاعا % % 20(@)(@@) % والثناء الجميل فيك إذ صي % ير للسامعين طرا سماعا % % PageV01P2823 21(@)(@@) % ما يداني إيناق منظرك الأب % % صار إيناق ذكرك الأسماعا % % 22(@)(@@) % جعل الله جدك الظاهر الأع % % لى إذا جدت الجدود اصطراعا % % PageV01P2824 البحر : - 1(@)(@@) % سأرحل يا أسماء عن دار معشر % جوادهم بالعرف معط كمانع % 2(@)(@@) % يجود به جود المقضي بنفسه % % حذار القوافي كارها غير طائع % 3(@)(@@) % إلى ملك لا يملك البخل ماله % % ولا يدري معروفه بالذرائع % % 4(@)(@@) % جواد به من أريحية جوده % تباريح يعجلن اختيار الصنائع % % 5(@)(@@) % من القوم لا يستحمدون ببذلهم % % ولكنهم يعطون جود طبائع % % 6(@)(@@) % ولو تاجروا لم يعبثوا بتجارة % ولا انخدعت تلك الحلوم لخادع % % 7(@)(@@) % أرى مجدهم مثل الجبال فإنها % % بنى الله إذ مجد الورى كالصنائع % % PageV01P2825 البحر : - 1(@)(@@) % لج الفؤاد فليس يلذعه % % عذل ولا النكبات تردعه % 2(@)(@@) % أوهى معاقد صبره كلف % لم يوهه يوما تمتعه % 3(@)(@@) % بمسنع ظلت محاسنه % % تخفي بها بدرا وتطلعه % 4(@)(@@) % فإذا دنا أنأى أخا كلف % وإذا نأى أدناه مضجعه % 5(@)(@@) % لم تعرني وهنا حبالته % % إلا عرا قلبي تفجعه % % 6(@)(@@) % كلا ولم ألمم بمضجعه % % إلا طغى جفني ومدمعه % % 7(@)(@@) % ظغيان مرتجس الذرى خضل % لحنينه زجل يرجعه % % 8(@)(@@) % حيران منبجس الكلى عصفت % % بعد الهدوء عليه زعزعه % % 9(@)(@@) % وكأنما نتجت رواعده % % وبوارق باتت تشيعه % 10(@)(@@) % يما تلاطم في غزارته % % آذيه وطمى تولعه % % PageV01P2826 11(@)(@@) % سقيا لأطلال عفت فعفا % % من بعدهن العيش أجمعه % % 12(@)(@@) % عهدي بريق لهوها خضلا % أرق الرياض يرف ممرعه % % 13(@)(@@) % أيام صيد جنانها بقر % حم تضمنهن أجرعه % 14(@)(@@) % يغدو الأريب لها ليصرعها % % وعيونها للحظ تصرعه % % 15(@)(@@) % من كل آنسة الحديث لها % % وجه كأن الشمس مطلعه % 16(@)(@@) % ولها دجى ليل تجللها % % فتظل تدريه وترفعه % 17(@)(@@) % ومنضد رفت مراشفه % % علا المدام به مشعشعه % 18(@)(@@) % ودعن 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms648# من كادت حشاشته % % لوداعهن ضحى تودعه % 19(@)(@@) % فتصدعوا ومضوا لطيتهم % % فعرى الفؤاد لهم تصدعه % % 20(@)(@@) % تالله تفتأ باكيا لهم % حتى يخد الخد أدمعه % % PageV01P2827 21(@)(@@) % ولما دموع العين راجعة % ماعشت وصلا فات مرجعه % % 22(@)(@@) % أفلا تسلاهم بمنجرد % كالسيل آنف منه أصمعه % % 23(@)(@@) % وسمت نواظره فجلت به % % جنا تفرعه وتقرعه % % 24(@)(@@) % وكأن أذنيه شبا قلم % % وحي يخططه مرفعه % % 25(@)(@@) % رحبت خواصره وجبهته % % والمنخران وتم أتلعه % % 26(@)(@@) % فأناف متناه على ثبج % % طلعت على الترهيف أضلعه % % 27(@)(@@) % واشتد علباءاه وانقوسا % % دون العذار فضاق برقعه % % 28(@)(@@) % وتحنبت ساقاه وانشنجت % % أنساؤه فقمصن أكرعه % 29(@)(@@) % فكأنما ائتلقت بأجنحة % يسبقن لمح الطرف أربعه % % 30(@)(@@) % تضحي الرياح إذا تمطر في % % شأويه حسرى ليس تتبعه % % PageV01P2828 31(@)(@@) % شرس السجية إن شرست له % % ويلين إن لا ينت أخدعه % 32(@)(@@) % طرف كأن على معاقده % % شرقا من الجادي يردعه % % 33(@)(@@) % أمطاكه جزل مواهبه % % كلف برب العرف يصنعه % % 34(@)(@@) % يهب الجزيل ولا يكدره % % بأذى ولا بالمن يتبعه % % 35(@)(@@) % لا بل يؤيده ويشفعه % % بندى يحل لديك موقعه % 36(@)(@@) % ويراه محتقرا لديه وإن % % أضحى لسان الشكر يرفعه % 37(@)(@@) % كم من يد سبقت إلي له % % حسناء جاد لها تبرعه % 38(@)(@@) % فشكرته فأثابني نعما % أوهى لها شكري يضعضعه % % 39(@)(@@) % ملك إذا افتخر الملوك سما % % كرم النجار به ومنزعه % 40(@)(@@) % فعلا وقصر دون مبلغه % % من مجد من ناواه أرفعه % PageV01P2829 41(@)(@@) % وله من العز التليد إذا % % عدت بنو شيبان أمنعه % 42(@)(@@) % سيما العزيز تجبر ويرى % % في العز سيماه تخشعه % 43(@)(@@) % وإذا بنو الموت استطالهم % وهج تغشى الموت أينعه % 44(@)(@@) % ودعوا نزال فطاح بالورع ال % % هيابة المنخوب مهلعه % % 45(@)(@@) % غادى كتائبهم بعدوته % % أجل يطحطح من يروعه % % 46(@)(@@) % متقلدا في الروع ذا شطب % كالرجع أبدع فيه مبدعه % % 47(@)(@@) % مما تقلد في كتائبه % % يوم الوغى واختار تبعه % 48(@)(@@) % عضبا كأن شعاعه لهب % يغنى به في الليل رافعه % % 49(@)(@@) % وكأنما كسيت عقيقته % % وشيا تأنق فيه صانعه % % 50(@)(@@) % أو دب فيه الذر فاختلفت % تفراه أكرعه وأذرعه % % PageV01P2830 51(@)(@@) % بأبي وأمي أنت ترب ندى % في بيت مكرمة تريعه % % 52(@)(@@) % إن الوزارة لم تزل بها % % شوق إليك يرى تنزعه % 53(@)(@@) % خطبتك إذا وافقت خطبتها % % وسواك أقصاه تسرعه % 54(@)(@@) % الله وفق مبتغيك لها % % وحباك أمرا كنت تدفعه % 55(@)(@@) % نظرا من الله العزيز لمن % أمسى نظام الملك يجمعه 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms649# % % 56(@)(@@) % أفلت نجوم الغي حين بدا % % للرشد نجم أنت مصدعه % % 57(@)(@@) % وأقمت للحق المنار على % % لقم الطريق فبان مهيعه % % 58(@)(@@) % ونشرت ميت العدل من جدث % قد كان فيه طال مهجعه % % 59(@)(@@) % أمنت بيمنك في مراتعها % % شاء الفلا وذعرن أضبعه % % 60(@)(@@) % ولقد يرى أوس ويونس من % % جناتها صعبا ممنعه % % PageV01P2831 61(@)(@@) % حسنت بك الدنيا وعادلها % % كف طليل الأيك مونعه % % 62(@)(@@) % وملأت مشرقها ومغربها % % عدلا تغشى الناس أوسعه % % 63(@)(@@) % فتمل معتليا سلامة ما % % قلدته وهناك مكرعه % % PageV01P2832 البحر : - 1(@)(@@) % سألتك إغنائي عن الناس كلهم % فأغنيتني عنهم وعنك جميعا % % 2(@)(@@) % فلست تراني الآن إلا مسلما % عليك مشيعا للثناء مذيعا % % 3(@)(@@) % وأما ارتيادي نائلا فمحرم % علي فإني قد غدوت ربيعا % % 4(@)(@@) % ألا هكذا فليمنع اليوم من غد % وإلا فلا يا من يريد صنيعا % % PageV01P2833 البحر : - 1(@)(@@) % بت وبات الصبيان في أرق % من بحة لم تزل تفزعنا % % 2(@)(@@) % يبكون من خوفها ويسهرني % % بكاؤهم فالبلاء يجمعنا % % 3(@)(@@) % نحتال للنوم كي يواتينا % % بكل شيء وليس ينفعنا % % 4(@)(@@) % لا حفظ الله تلك مسمعة % ما يكره السامعون تسمعنا % % PageV01P2834 البحر : - 1(@)(@@) % وطويل القرن إلا أنه % % لاحق بالأرض كالقرد الجزع % 2(@)(@@) % طال قرناه معا فارتفعا % % وأبت قامته أن ترتفع % 3(@)(@@) % فهو إن فكرت في رجل % % شب قرناه ولكن ما زرع % 4(@)(@@) % سوف تدري من تمرست به % % يا أبا حفص أخا الرأس القرع % % PageV01P2835 البحر : - 1(@)(@@) % نحن تركناه قصرا أصلعا % % من بعد ما كان طويلا أفرعا % % 2(@)(@@) % ما زال يكسوه إذا ما استصفعا % % صفعا . . حتى قرعا % % PageV01P2836 البحر : - 1(@)(@@) % رأس أبي حفص عظيم المنفعه % كم من يد أمست به ممتعه % % 2(@)(@@) % لو عدمته لبكت بأربعه % % وأصبحت لفقده مفجعه % 3(@)(@@) % رأس جلاه الدهر حتى قرعه % % فلم يدع في جانبيه قزعه % 4(@)(@@) % كأنما قرعه ليصفعه % لله تلك الهامة المربعه % 5(@)(@@) % إذا بدت كالفيشة المقصعه % % مصقولة مدهونة مصنعه % % 6(@)(@@) % ثم هوت فيها يد كالمقمعه % % بصفعة هائلة مشعشه % % 7(@)(@@) % كأنها نفاخة مفرقعه % % يا ليت لي يافوخه وأخدعه % % 8(@)(@@) % ملك يد من فضل رب ذي سعه % % بل ليتني أسمع تلك القعقعه % % 9(@)(@@) % مكان أعلى مسمع ومسمعه % % PageV01P2837 البحر : - 1(@)(@@) % قالوا هجاك أبو حفص فقلت لهم % % تأن في بيته من سوف يردعه % 2(@)(@@) % ما حاز منزله عرسا ولا أمة % إلا ومن أجل هجوي سوف يصفعه % % PageV01P2838 البحر : - 1(@)(@@) % لا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms650# تحسب الشيخ أبا حفصل % يعيش من أقلامه الصلع % % 2(@)(@@) % لكن من الله ومن زوجه % % تستدخل الأصلع في المخدع % % 3(@)(@@) % ليست بذي بأس ولكنها % % قوامة الليل على الأربع % % 4(@)(@@) % من كسبها عاش أبو حفصل % وطال ما عاش مع الجوع % % 5(@)(@@) % وربما عاد على نفسه % % بكسب رأس جيد المصفع % % 6(@)(@@) % يمكن بالأكلة من صفعه % % في ساحة الرأس وفي الأخدع % % PageV01P2839 البحر : - 1(@)(@@) % دخلت على خالد مرة % وقد غاب في ذاته الأصلع % 2(@)(@@) % فقلت أشيخ كبير يناك % % فقال أجل خلق يرقع % 3(@)(@@) % فقلت له على أربع % % فقال نعم هكذا أنجع % 4(@)(@@) % إذا لم أكب على أربع % فلم خلقت لي إذا أربع % 5(@)(@@) % تركت السجود لأربابه % % فدعني إذ فاتني أركع % % 6(@)(@@) % قبيح بمثلي على سنه % % يناك فيبطح أو يضجع % % 7(@)(@@) % لأهل الجرائم وضع الصدو % % ر لا لي والمصرع الأضرع % % 8(@)(@@) % فأعرضت عن رجل فاسق % لشيطانه فيه مستمتع % 9(@)(@@) % إذا فعل السوء قال الخنا % % ليشبه منظره المسمع % PageV01P2840 البحر : - 1(@)(@@) % وجهك يا شنطف هول المطلع % يأخذني منه انتفاض وفزع % 2(@)(@@) % ويطلع النحس به إذا طلع % يا ويح أثوابك لو قد تنتزع % % 3(@)(@@) % لنزعت عن برص وعن لمع % % والرأس فيه قزع من القرع % % 4(@)(@@) % والفرج كالبالوع ما شئت بلع % % PageV01P2841 البحر : - 1(@)(@@) % يا تناه والتناهي انقطاع % كن كما سماك مولى لكاع % 2(@)(@@) % كن لدنياه انقطاعا وشيكا % وانقلاعا ليس فيه انخداع % 3(@)(@@) % وانصداعا ليس فيه التئام % وافتراقا ليس فيه اجتماع % 4(@)(@@) % خنه ما أعطاك معطي العطايا % % مثلما خان السحاب انقشاع % % 5(@)(@@) % فهو للسلطان عر وعار % واتضاع ليس فيه ارتفاع % % 6(@)(@@) % رقعة في الملك ليست بزين % أي ثوب زينته الرقاع % % 7(@)(@@) % طلقت نعمى ابن معدان منه % % بثلاث ليس فيها رجاع % % 8(@)(@@) % أو بقول الناس عودا وبدءا % يا لقوم باخ ذاك الشعاع % % 9(@)(@@) % فترت تلك الرياح الجواري % % كلها وانحط ذاك الشراع % % 10(@)(@@) % وحمت آل الفرات الليالي % % أن يروا أسراب نعمى تراع % % PageV01P2842 11(@)(@@) % أيها المصروع في كل حال % استمع مني ففيك استماع % % 12(@)(@@) % قد عجبنا أنك المرء يشقى % % عنده ناس وتحظى سباع % % 13(@)(@@) % بيتك البيت القصير السواري % % ما بنى فيه ضيوف جياع % % 14(@)(@@) % واستك الاست التي منذ شقت % أبدا فيها فهود شباع % 15(@)(@@) % أيها المصروع من كل وجه % صرعات ما جناها صراع % % 16(@)(@@) % بل بغاء مستحر وخبل 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms651# % مستمر مذ غذاك الرضاع % 17(@)(@@) % صرعة بيدي لها فوك سلحا % % من كلام يجتويه السماع % 18(@)(@@) % بعد أخرى يلفظ الثلط عنها % % فقحة فيها هناك اتساع % % 19(@)(@@) % قلت إذ قالوا جبان كذبتم % % وأثمتم بل شجاع رواع % % 20(@)(@@) % كل صبر كان في الناس طرا % كلفة والصبر فيه طباع % % PageV01P2843 21(@)(@@) % أبدا عند ابن معدان فحل % يشترى جهرا وأنثى تباع % % 22(@)(@@) % هم أير ثم نوم طويل % وهموم است هناك القراع % % 23(@)(@@) % فإذا ليمت على ذاك قالت % % ليس لي بالجاهلين ارتقاع % 24(@)(@@) % تعمر الحيات في كل يوم % منه حجرا ليس فيه امتناع % % 25(@)(@@) % فقحة فيها اتساع متى لم % % يحشه ضاقت عليه البقاع % 26(@)(@@) % هي في مقدار قبل ودبر % أفضيا فالذرع ذرع مشاع % 27(@)(@@) % هل شجاع القوم إلا شجاع % أبدا ينساب فيه شجاع % 28(@)(@@) % قيل إن العبد عبد كفور % ما لفحشاء لديه قناع % % 29(@)(@@) % قلت لا بل ذاك عبد شكور % يشكر المولى ومفساه باع % % 30(@)(@@) % وترى البلوى التي في حشاه % % نعمة فيها لنفس متاع % PageV01P2844 31(@)(@@) % ولدفع الفحل أشهى إليه % % من دفاع الله إذ لا دفاع % % 32(@)(@@) % إن دنيا ملكته رغيفا % لمباح ما لها بل مضاع % 33(@)(@@) % ملحد لا يعبد الله لكن % كل غرمول قفاه ذراع % % 34(@)(@@) % ومتى أنحى عليه جماع % عد أن قد كان منه الجماع % 35(@)(@@) % فله من ناكة الروم ود % وله منهم أخوهم سواع % 36(@)(@@) % وله منهم أخوه يغوث % وله منهم يعوق مطاع % % 37(@)(@@) % وله نسر ولات وعزى % % ما له لا حط ذاك البعاع % % PageV01P2845 البحر : - 1(@)(@@) % يا بن شهر الصيام أنت رقيع % ووضيع كما يكون الوضيع % 2(@)(@@) % كل شعر جهدت نفسك فيه % % وتكلفت نظمه تفقيع % 3(@)(@@) % لم يقله إلا موطن نفس % أنه عند بثه مصفوع % % 4(@)(@@) % فاترك الشعر وارتدع من قريب % % واعد عنه إلى الذي تستطيع % 5(@)(@@) % فستلهيك إبرة وخيوط % وإلى الأصل ما تؤول الفروع % % PageV01P2846 البحر : - 1(@)(@@) % هبك الفرات الذي بالروم مطلعه % أليس والدجلة والعوراء تقطعه % % 2(@)(@@) % من أنت يا من أبوه نصف ساقية % من ياشكوتي وكيف الأرض ترضعه % 3(@)(@@) % أما رضيت بأن تحظى ببيدرة % % من كوخ مصلحة بالقلس تذرعه % % 4(@)(@@) % حتى وليت رقاب الناس كلهم % من شئت تخفضه منهم وترفعه % % PageV01P2847 البحر : - 1(@)(@@) % ضراط ابن ميمون فيه سعه % % وضرط أبي صالح فيه دعه % 2(@)(@@) % فيضرط هذا على 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms652# رجله % ويضرط هذا على أربعه % 3(@)(@@) % إذا ما تضارط هذا وذا % % سمعت رعودا لها قعقعه % PageV01P2848 البحر : - 1(@)(@@) % إذا كنت لا تستطيع الجما % % ع وأنت لأهل الزنا مجمع % 2(@)(@@) % فإنك في ذاك مثل المسن % % ن يحد الحديد ولا يقطع % PageV01P2849 البحر : - 1(@)(@@) % ادعني يا أخا العلا وادع عوا % % سا ولو كان قبل موتي بساعه % 2(@)(@@) % ولك الله والنبي وأهلو % % ه شهودا والمسلمون جماعه % 3(@)(@@) % أنني لا أروع قلبك بالأك % ل لما فيه عندكم من بشاعه % % 4(@)(@@) % فإذا جاءني رسولك أحكم % % ت أموري بالأكل قبل المجاعه % % 5(@)(@@) % وتزودت عند ذاك من الما % % ء بحسب الإمكان والاستطاعه % 6(@)(@@) % فإذا البول لطني لم يكن قص % دي إلى المستراح والبلاعه % 7(@)(@@) % وتوجهت في الخفاء إلى الشط % ط ففي مثله لمثلي قناعه % % 8(@)(@@) % وفرشت المنديل تحتي وصير % ت تكاي خفي مع الدراعه % % 9(@)(@@) % فارض مني بذاك اليمين وإن % % كان يمينا عليك فيها شناعه % % PageV01P2850 البحر : - 1(@)(@@) % ولحية يحملها مائق % مثل الشراعين إذا أشرعا % % 2(@)(@@) % تقوده الريح بها صاغرا % قودا عنيفا يتعب الأخدعا % % 3(@)(@@) % فإن عدا والريح في وجهه % % لم ينبعث في وجهه إصبعا % % 4(@)(@@) % لو غاص في البحر بها غوصة % صاد بها حيتانه أجمعا % % PageV01P2851 البحر : - 1(@)(@@) % لما تؤذن الدنيا به من شرورها % % يكون بكاء الطفل ساعة يوضع % 2(@)(@@) % وإلا فما يبكيه منها وإنها % % لأفسح مما كان فيه وأوسع % 3(@)(@@) % إذا أبصر الدنيا استهل كأنه % % يرى ما سيلقى من أذاها ويسمع % % 4(@)(@@) % كأني إذا استهللت بين قوابلي % % بدا لي ما ألقى ببابك أجمع % % 5(@)(@@) % وفي بعض أحوال النفوس كأنها % % ترى خلف ستر الغيب ما تتوقع % % 6(@)(@@) % أقول لوجه حال بعد بياضه % % وإسفاره واللون أسود أسفع % 7(@)(@@) % ألا أيها الوجه الذي غاض ماؤه % % وقد كان فيه مرة يتريع % 8(@)(@@) % ذق الهون والذل الطويل عقوبة % كذا كل وجه لا يعف ويقنع % 9(@)(@@) % وفرت عليه الماء عشرين حجة % % ففرق منه الحرص ما كنت أجمع % 10(@)(@@) % فلا تحم أنفا إن ضرعت فإنه % % كذا كل من يستشعر الحرص يضرع % % PageV01P2852 11(@)(@@) % سعيت لإيقاظ المقادير ضلة % وما كانت الأقدار لو نمت تهجع % % 12(@)(@@) % ولو جهد الساعون في الرزق جهدهم % % لما وقعت إلا بما هي وقع % 13(@)(@@) % أكنت حسبت الله ويحك لم يكن % % تعالى اسمه إلا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms653# بصنعك يصنع % % PageV01P2853 البحر : - 1(@)(@@) % كيف يزهو من رجيعه % أبد الدهر ضجيعه % 2(@)(@@) % هو منه وإليه % % وأخوه ورضيعه % 3(@)(@@) % ليس يخلو منه إلا % وقت ما لا يستطيعه % 4(@)(@@) % ثم يلجيه إلى ال % % حش بصغر فيطعيه % % 5(@)(@@) % فإن استعصى عليه % % فهو لا شك صريعه % % 6(@)(@@) % ثم يبدي منه صوتا % ود لو صم سميعه % % 7(@)(@@) % لبحسب المرء عارا % يوجع القلب وجيعه % % 8(@)(@@) % أنه عبد لجعس % يشتريه ويبيعه % PageV01P2854 البحر : - 1(@)(@@) % إذا ما أغاروا فاحتووا مال معشر % أغارت عليهم فاحتوته الصنائع % PageV01P2855 البحر : - 1(@)(@@) % وأما نومكم عن كل خير % كنوم الفهد لا يخشى دفاعا % % PageV01P2856 البحر : - 1(@)(@@) % لئن أخطأت في مدحي % % ك ما أخطأت في منعي % % 2(@)(@@) % لقد أنزلت حاجاتي % % بواد غير ذي زرع % PageV01P2857 البحر : - 1(@)(@@) % قالوا هجاك أبو المزاق قلت لهم % % ولم هجاني فقالوا للذي بلغه % 2(@)(@@) % أنهى إليه نصيح غير متهم % أن قد تركت مغيضي عرسه ردغه % 3(@)(@@) % فقلت ما ناك مثلي مثل زوجته % % لكن إخال عدوا كاشحا نزغه % 4(@)(@@) % وما أراه على حال تعف له % % أنثى ولو حمقت حتى تكون دغه % % 5(@)(@@) % تالله تغنى بذاك القرد غانية % وإن أجد لها ثوبا وإن صبغه % 6(@)(@@) % لا يهجوني فإني لست هاجيه % % ولا يرى ذاك مني أو يرى صدغه % 7(@)(@@) % وما امتهاني به شعري وخلقته % تهجوه عني وعن غيري بكل لغة % % 8(@)(@@) % سيان عندي أنالتني عضيهته % % أم مص بظر التي أدته أم مضغه % 9(@)(@@) % لا تعجبوا أن طول الصفع هوسه % بل اعجبوا أن طول الصفع ما دمغه % 10(@)(@@) % أبيهقي تقول الشعر في زمني % % أولى له ما لمثلي تنبع النبغه % PageV01P2858 11(@)(@@) % لئن تصدى لنابي حية ذكر % نضناضة لا يبل الدهر من لدغه % 12(@)(@@) % لما أدل بمجلود ولا كرم % لكن بعرض طويل الهون قد دبغه % 13(@)(@@) % هاجيك يا نائك الحولاء في حرج % ما قتله وزغا يأوي إلى وزغه % % 14(@)(@@) % أراه حيا وإن طال النقيق به % % أقل منه إذا ما فادغ فدغه % % 15(@)(@@) % يحمي من القتل أوزاغا تنق لنا % % دم لهن يعاف الكلب أن يلغه % PageV01P2859 البحر : - 1(@)(@@) % قبلته فمج في جوف فيها % % ذرق باز من ناطف ممضوغ % 2(@)(@@) % يا لها ريقة لقد رشفتها % % من فم شدقم رحيب الفروغ % 3(@)(@@) % ريقة لو تمج مجا على الأف % % عى لباتت بليلة الملدوغ % 4(@)(@@) % كرهة 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms654# الريح تزهق النفس منها % % مرة الطعم فهي سلح بدوغ % 5(@)(@@) % جشمتها المرين من حب أير % بالغ كل مبلغ مبلوغ % % 6(@)(@@) % حدثتني به كنيزة عنه % % غير إفك من الحديث مضوغ % 7(@)(@@) % قلت هل يبلغ اللهاة فقالت % % أي لعمر الإله أي بلوغ % 8(@)(@@) % أوقح الناس كلهم ليس يخفى % % ذاك في جلد وجهها المدبوغ % % 9(@)(@@) % لست أربي بقدرها عن تالل % ه ولكن بثوبها المصبوغ % 10(@)(@@) % وبقدرالغناء إذا تدعيه % % لا بحق بل باطل مدموغ % % PageV01P2860 11(@)(@@) % قد مججناك يا كنيزة ريا % فانبغي في زناك كل نبوغ % % 12(@)(@@) % وأديمي لي الصدود وروغي % % عن وصالي فمنيتي أن تروغي % % 13(@)(@@) % أنا في نعمة بصدك عني % % أكد الله نعمتي بالسبوغ % % 14(@)(@@) % لو تسوغت في الحلوق بشهد % أو رحيق مشعشع لم تسوغي % % 15(@)(@@) % لم تروغي عن المحجة في وص % لك بل أنت شكلة لم تروغي % % 16(@)(@@) % أنت والعبد جيفة صادفتها % % كلبة في الدماء ذات ولوغ % % PageV01P2861 البحر : - 1(@)(@@) % يا راميا غرض القطي % % عة بالجفاء مبلغا % % 2(@)(@@) % قد قلت إذا حاولتها % % بلغ المحاول ما ابتغى % % 3(@)(@@) % ما كان ود خنته % % حظا فخنه مسوغا % % 4(@)(@@) % لهفي لأيام مضت % % مشغولة بك فرغا % % PageV01P2862 البحر : - 1(@)(@@) % قال يوما لأسود % ناكه وسط ممرغه % 2(@)(@@) % حك درزي بخصتيتي % ك قليلا بنغنغه % % 3(@)(@@) % ثم قف بضرطة % ذات هول مترغه % % 4(@)(@@) % قال % % والله بيغه % % 5(@)(@@) % قلتنكها فإنها % % فقحة تعرف اللغه % % PageV01P2863 البحر : - 1(@)(@@) % وبديع من البدائع يسبي % % كل عقل ويطبي كل طرف % 2(@)(@@) % وفي الحسن والملاحة حتى % % ما يوفيه واصف حق وصف % 3(@)(@@) % قدح كان للرشيد اصطفاه % % خلف من ذكوره غير خلف % 4(@)(@@) % كفم الحب في الحلاوة بل أح % % لى وإن لا يناغي بحرف % % 5(@)(@@) % صيغ من جوهر مصفى طباعا % لا علاجا بكيمياء مصف % 6(@)(@@) % تنفذ العين فيه حتى تراها % % أخطأته من رقة المستشف % % 7(@)(@@) % كهواء بلا هباء مشوب % بضياء أرقق بذاك وأصف % % 8(@)(@@) % وسط القدر لم يكبر لجرع % % متوال ولم يصغر لرشف % % 9(@)(@@) % لا عجول على العقول جهول % بل حليم عنهن في غير ضعف % 10(@)(@@) % يمتع الشاربين بالشرب فيه % % وبلذات كل قصف وعزف % PageV01P2864 11(@)(@@) % ما رأى الناظرون قدا وشكلا % فارسا مثله على بطن كف % % 12(@)(@@) % ليس يخلو إذا تعاطاه قوم % من أكف يمسحنه بتحفي % % 13(@)(@@) % ما رأوه إلا استخف حليم % لم يكن قبل ذاك 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms655# بالمستخف % 14(@)(@@) % تؤثر العين أن تنزه فيه % % عند قول الكرى لذي العين أغفي % % 15(@)(@@) % فيه نون معقرب عطفته % حكماء القيون أحسن عطف % % 16(@)(@@) % مثل عطف الأصداغ في وجنات % من غزال يزهى بحسن وطرف % % 17(@)(@@) % ذخرته لك العواقب عندي % % يتخطاه كل حين وحتف % % 18(@)(@@) % فتمتع به وعش في سرور % ألف عام ولست أرضى بألف % % 19(@)(@@) % ثم إني مشمر من ثيابي % % فملاقيك من عتابي بزحف % % 20(@)(@@) % أمن العدل أن حرمت وغيري % % من عطاياك بين غرف وجرف % % PageV01P2865 21(@)(@@) % عم من عم مدحه الناس طرا % منك جود سماؤه ذات وكف % % 22(@)(@@) % وعداني أن أستخصك مدحي % % يابن يحيى وتلك خطة خسف % % 23(@)(@@) % ليس ترضى بما فعلت قواف % أنت منها مصدر ومقفي % % 24(@)(@@) % مدح فيك صنتها كل صون % تحت عرض ظلفته كل ظلف % 25(@)(@@) % بعضها قد بدا وبعض يراعي % % أن يرى للعطاء موضع كشف % 26(@)(@@) % لا تكذب مخيلة لك أضحت % يخطف الطرف لمعها كل خطف % 27(@)(@@) % لهوة أو فإسوة يابن يحيى % % أتأسى بها فتبرد لهفي % % 28(@)(@@) % رش جناحي أو سم لي مستريشا % % لك أضحى وريشه غير وحف % 29(@)(@@) % وعلي فارط العتاب فإني % % واطىء من معاتبي كل رضف % % 30(@)(@@) % قائل فيك للعدو مقالا % فيه كبت له وإرغام أنف % % PageV01P2866 31(@)(@@) % أيهذا المسائلي بعلي % أنا طب به فسائل وأحف % 32(@)(@@) % لعلي في ذروة المجد بيت % لم يسقف سوى المساء بسقف % % 33(@)(@@) % شاد بنيانه إلى النجم جود % يهدم المال باعتداء وعسف % 34(@)(@@) % يا لقوم لجوده كيف يبني % % وهو سيل وكل سيل معفي % % 35(@)(@@) % لو تكون الجبال مالا أو البح % % ر لغاداهما بنسف ونزف % % 36(@)(@@) % هل تراه وماله غير نهب % أم تراه وجاهه غير وقف % % 37(@)(@@) % ما يرى نهزة من العرف إلا % % ثقفتها يد امرىء منه ثقف % % 38(@)(@@) % قذفت خيفة الملامة منه % % في فؤاد مشيع كل قذف % % 39(@)(@@) % فهو ما شئت من جبان شجاع % آمن راجف الحشا كل رجف % 40(@)(@@) % حاسر للسلاح مجتاب درع % دون أدنى قوارص القول زعف % PageV01P2867 41(@)(@@) % يتقي نفحة اللسان ويغشى % % كل طعن وكل ضرب طلخف % 42(@)(@@) % يقبل البخس في الثناء علي % ويكيل الجزاء كيل موفي % % 43(@)(@@) % ما أفترينا في مدحه بل وصفنا % % بعض أخلاقه وذلك يكفي % % 44(@)(@@) % لو مدحناه بالذي ليس فيه % % وقع المدح منه موقع قرف % 45(@)(@@) % ولكنا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms656# كناحلي المسك عرفا % % من سواه مكان أطيب عرف % 46(@)(@@) % ما لنا في مديحه غير نظم % للمساعي التي سعاها ووصف % 47(@)(@@) % هذه غيبتي برغم عدو % يغضف الأذن دونها كل غضف % 48(@)(@@) % وبرغم اللهى التي راغمتني % % فهي عني مصروفة كل صرف % 49(@)(@@) % من يكن كهفه سواك فحسبي % % بك في النائبات من كل كهف % PageV01P2868 البحر : - 1(@)(@@) % حاجتي أيها الأمير كتاب % لا يخل التوكيد منه بحرف % 2(@)(@@) % ساحر ماهر لو استعطف البي % % ض لشيب الرجال جدن بعطف % 3(@)(@@) % فيه من نجحه رقى نافذات % آخذات بكل سمع وطرف % 4(@)(@@) % ينزل القطر من ذرى المزن عفوا % ويحط الوعول من كل كهف % 5(@)(@@) % زل عن نية فساعد فيه % % حسن معناه حسن لفظ ورصف % 6(@)(@@) % وأتى من وفائه بغية النف % % س يمس العليل مسا فيشفي % % 7(@)(@@) % واصف حرمتي وواجب حقي % % ومكاني لديك أبلغ وصف % 8(@)(@@) % شافع لي إلى سميك في إج % % راء ألف له حقيقة ألف % % 9(@)(@@) % واختيار المكان ما استطاع لآسمي % % مع تعجيله سراحي وصرفي % % 10(@)(@@) % وليضف ذلك الأمير إلى ما % % هو مجد من سيب أفضل كف % PageV01P2869 11(@)(@@) % فقديما ما جاد بالمال والجا % % ه وأنف العدو أرغم أنف % % 12(@)(@@) % ليس ممن يسد دون ولي % باب عرف لفتحه باب عرف % % 13(@)(@@) % ولئن أصبحت أياديك شفعا % كل إلف منها مقارن إلف % 14(@)(@@) % فاليمينان يفعلان جميعا % فوق ما تفعل اليمين بضعف % 15(@)(@@) % ولهذا أداهما ذو اليميني % % ن تراثا إليك يا خير خلف % PageV01P2870 البحر : - 1(@)(@@) % وصاحب لم يكن ليصحبه % مثلي لولا صباي أو خرفي % % 2(@)(@@) % ظلمت نفسي به فأنصفني % % بصونه عن سفاله شرفي % % 3(@)(@@) % دابرني فانصرفت عنه فأح % % مدت بحمد الإله منصرفي % % 4(@)(@@) % وكنت أعطي مودتي سرفا % فقد تركت القبيح من سرفي % % PageV01P2871 البحر : - 1(@)(@@) % يا أبا إسحاق وآقلب % نظم إسحاق وصحف % 2(@)(@@) % واترك الحاء على حا % % ل فما للحاء مصرف % 3(@)(@@) % يشهد الله لقد أص % % بحت عين المتخلف % 4(@)(@@) % لا عزيزا تظلم النا % % س ولا حرا فتنصف % 5(@)(@@) % يا مرجى غير مجد % وظنينا غير مخلف % % 6(@)(@@) % يا عذاب المجتديه % % وغرور المتعفف % % 7(@)(@@) % يا فقيد المثل والحا % % مد موجود المعنف % % 8(@)(@@) % لك في الناس نثا ذك % % ر كثير المتأفف % 9(@)(@@) % إن من ضيع مدحا % فيك والمسرف مسرف % 10(@)(@@) % لكمن ألقى ثمين الد % در في حش 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms657# مجيف % % PageV01P2872 11(@)(@@) % لم أجد عذرك للمح % % تال فيه المتلطف % % 12(@)(@@) % غير بطن لك سأ % آل إذا أصبحت ملحف % % 13(@)(@@) % ليس في مالك عن بط % % نك من فضل فيردف % % 14(@)(@@) % يا عدو الزاد يا ثع % % بان موسى المتلقف % % PageV01P2873 البحر : - 1(@)(@@) % مدحت سليمان الذي قيل إنه % % كريم وبعض القول زور وزخرف % 2(@)(@@) % مديحا إذا ما الطير مرت رعالها % % بمنشده ظلت هنالك تعكف % % 3(@)(@@) % فما نلت منه نائلا غير أنني % % عرفت بشأو العبد كيف التخلف % 4(@)(@@) % وما كان مدحي من طريد هزيمة % % على عقبيه سلحه بعد ينظف % 5(@)(@@) % حديث بأطراف الأسنة عهده % % فأحشاؤه من شدة الخوف ترجف % % 6(@)(@@) % فيا أسفي أن نيط مدحي بمثله % % ويا أسفي أن كان حظي التأسف % PageV01P2874 البحر : - 1(@)(@@) % قرن سليمان قد أضر به % % شوق إلى وجهه سيدنفه % 2(@)(@@) % أعرض عن قرنه وصد فما % % أصبح شيء عليه يعطفه % 3(@)(@@) % كم يعد القرن باللقاء وكم % % يكذب في وعده ويخلفه % % 4(@)(@@) % لا يعرف القرن وجهه ويرى % % قفاه من فرسخ فيعرفه % PageV01P2875 البحر : - 1(@)(@@) % ما القلب في إثرهم بمختطف % ولا بذي صبوة ولا كلف % % 2(@)(@@) % سلوت عن خطة الخليط وعن % % مرتبع منهم ومخترف % 3(@)(@@) % إن محل الأنيس بعدهم % للمرء ذي السن شر معتكف % % 4(@)(@@) % وصل الغواني صبا الشباب وغش % % يان المعاني حقا صبا الخرف % % 5(@)(@@) % فعد عن ذكرهم وعن دمن % بمدرج للرياح منتسف % % 6(@)(@@) % ما رعينا عهد كل خائنة % قاسية غير ذات منعطف % % 7(@)(@@) % تحميك معروفها الممنع بال % % بخل ولين المرد بالصلف % % 8(@)(@@) % بيضاء قد شيف خلقها وأبى % % مذموم أخلاقها فلم يشف % 9(@)(@@) % تضمن عن وجهها ومخبرها % % حسن رواء وقبح منكشف % % 10(@)(@@) % مناعة نيلها المحب وما % % تنفك من صدها على خفف % PageV01P2876 11(@)(@@) % من اللواتي إذا ظفرن بنا % % أنزفن ألبابنا سوى نزف % % 12(@)(@@) % حكمن فينا فما عدلن وإن % % عدلن بين الجفاء والقضف % % 13(@)(@@) % كم من دموع سفحنها هدر % ومن دماء سفكنها ظلف % % 14(@)(@@) % بكل أحوى أحم في حور % وكل أقنى أشم في ذلف % % 15(@)(@@) % مضى أوان الصبا وحين البطا % % لات وهذا أوان مصطرف % 16(@)(@@) % ولائم أن حللت شاهقة % تزل منها الوعول عن قنف % % 17(@)(@@) % لم ير لي خلة تعاب سوى ال % % خلة أو رغبتي عن الحرف % % 18(@)(@@) % صدق يقين أن لا مقدر لل % % أرزاق إلا مخلق النطف 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms658# % % 19(@)(@@) % قلت وقد لام في القناعة بال % % مجد وحلف المعاش ذي الشظف % % 20(@)(@@) % هم رجال العلا تنافسهم % % فيها وهم الحمير في العلف % % PageV01P2877 21(@)(@@) % ما سرني اللؤم والغضارة في ال % % عيش بديلا بالمجد والقشف % % 22(@)(@@) % لي عفة حسب من تكون له % % من الغنى غفة من الغفف % 23(@)(@@) % كأن كفي بها مملكة % دجلة تسقي منابت السعف % % 24(@)(@@) % ما قصر العسر بازدلافي لل % % مجد مشيحا في كل مزدلف % % 25(@)(@@) % أرق مالي ولو أشاء لأص % % بحت وأمسيت منه في كثف % 26(@)(@@) % إني أعاف الخبيث يعلمه ال % % له إذا ما الخبيث لم يعف % 27(@)(@@) % أطمح كالنسر في السكاك ولا % % أخلد إخلاده إلى الجيف % % 28(@)(@@) % شاد لي السور بعد توطئة ال % % أس أب قال أنت للشرف % % 29(@)(@@) % وأبذل البلغة الكفاف من ال % % قوت إذا ما المستضيف لم يضف % % 30(@)(@@) % أبني البناء الذي يقيم على ال % % دهر ويودي خورنق النجف % % PageV01P2878 31(@)(@@) % وأرتجي أن تدوم لي ديم % من عارض في السماء ذي وطف % % 32(@)(@@) % أعني أبا الصقر أنه ملك % % في منصب للعيون مشترف % % 33(@)(@@) % من معشر فيهم السماحة وال % % حلم وفيهم قعاقع الحجف % % 34(@)(@@) % أركبه الله ذروة تمكت % من شرف من يكن بمرتدف % 35(@)(@@) % يا راكبا نحوه ليسأله % % يممه واحرف بكل محترف % % 36(@)(@@) % ولا تشحن أن تشارك في % % جدواه فالبحر غير منتزف % % 37(@)(@@) % بلغه مدحي فإنه كلم % يفعمه مسكه ولم يذف % % 38(@)(@@) % من قول علامة له لجج % يغرق فيهن صاحب النتف % % 39(@)(@@) % قل لأبي الصقر قول ذي سدد % قرطس بالحق غرة الهدف % % 40(@)(@@) % يا أيها السيد الذي اعترفت % له الصناديد كل معترف % % PageV01P2879 41(@)(@@) % أصبحت يطريك كل مضطغن % منحرف عنك كل منحرف % 42(@)(@@) % أنطقه فضلك المبرز بال % % حق فأداه غير معتنف % % 43(@)(@@) % وأصدق المدح مدح ذي حسد % % ملآن من بغضة ومن شنف % % 44(@)(@@) % أنت الذي أخصبت رعيته % % حتى شكا البدن صاحب العجف % % 45(@)(@@) % واتسق النظم في النظام به % % فائتلف الشمل كل مؤتلف % % 46(@)(@@) % وأنصف الظالم المظلم فال % % عصفور جار العقاب في لجف % 47(@)(@@) % تكد للمجد كدح مجتهد % أو لمحل النعيم والترف % % 48(@)(@@) % ما زلت تسعى لكل صالحة % وإن تكلفت أثقل الكلف % 49(@)(@@) % تجري إلى كل غاية شطط % وتنتوي كل نية قذف % 50(@)(@@) % يا محيي الشعر والسماح وقد % % كانا جميعا مضمني جدف 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms659# % % PageV01P2880 51(@)(@@) % أدعى كتاب إلى الجميل وأو % عاه لما يشتهى من الخرف % % 52(@)(@@) % يا مبرىء الحسبة التي سقمت % بل التي أشرفت على التلف % % 53(@)(@@) % دوايت أدواءها وقد دنفت % حينا من الدهر أيما دنف % 54(@)(@@) % براجح الوزن من سراة بني ال % % عباس يقفو مذاهب السلف % 55(@)(@@) % أبلج يجلو بضوء غرته % % ونور تقواه حالك السدف % 56(@)(@@) % إذا رأى وجهه ومنصبه % % ضن بذاك الجمال والشرف % % 57(@)(@@) % فعف عن كل ما يشينهما % % وكف أحكامه عن الجنف % % 58(@)(@@) % ينهاه عن مأثم تقى ورع % فيه وعن مدنس نهي أنف % 59(@)(@@) % له ذكاء الفتى وقد كملت % فيه على ذاك حنكة النصف % 60(@)(@@) % ممن إذا الغمر رام مغمزه % % لم يؤت من قسوة ولا قصف % PageV01P2881 61(@)(@@) % يغدو شديدا على المريب وتل % قاه لمن تاب لين الكنف % 62(@)(@@) % يذعر بالهيبة الهزبر ويس % % تنزل بالعدل أعصم الشعف % % 63(@)(@@) % فلو يرى هديه النبي أو ال % % عباس قالا بوركت من خلف % % 64(@)(@@) % كم قائل صادق وقائلة % لمن يخاف العداء لا تخف % % 65(@)(@@) % إن مقام المظلوم عند أبي ال % % عباس أضحى مقام منتصف % 66(@)(@@) % شمر للقوت وهو من ذهب % عزا وللنقد وهو من خزف % 67(@)(@@) % فأوسع الفاسدين مصلحة % في غير إثم هناك مقترف % 68(@)(@@) % ونكل الباعة التي عمرت % تجمع بين التطفيف والحشف % 69(@)(@@) % وأنكر النكر بعدما اكتنت ال % % فتنة في فتكها أبا دلف % 70(@)(@@) % يفديه آمين كل ملتحف % على الخيانات كل ملتحف % PageV01P2882 71(@)(@@) % واسعد به أيها الوزير فقد % % أعطيته طاهرا من النطف % % 72(@)(@@) % قلدك الله منه لؤلؤة % كم صانها عن سواك بالصدف % 73(@)(@@) % قلدته أمرنا فقام به % % غير أخي لوثة ولا لفف % % 74(@)(@@) % ومثلك اختار مثله وكذا % % من كان بالمسلمين ذا لطف % % 75(@)(@@) % أقسمت ما في الذي تسوس به الد % دين وملك الملوك من وكف % % 76(@)(@@) % كلأ ولا سرت بالرعية في ال % % وعث فأتعبتها ولا الظلف % % 77(@)(@@) % بل أنت ذو السيرة التي قصدت % % قدما وحادت عن كل معتسف % % 78(@)(@@) % وهكذا سيرة الجواد إذا % % لم يؤت من هجنة ولا قرف % % 79(@)(@@) % يختلف الناس في سواك وما % % توجدهم موقعا لمختلف % % 80(@)(@@) % أنت الذي أجمعت جماعتهم % % أنك من لا يشول في الكفف % % PageV01P2883 81(@)(@@) % جمعت ما يجمع الوزير فما % % تنفك من حاسد على أسف % % 82(@)(@@) % إرب يكاد العدى به وندى % % يقرن 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms660# بين القلوب بالألف % 83(@)(@@) % ذهبت بالدهى والسماح معا % والناس من ذاك وذاك في طرف % 84(@)(@@) % وأنت كالبحر لا كفاء له % % في بعد غور وقرب مغترف % 85(@)(@@) % وحلمك المنقذ النفوس إذا % % أشرفن من معطب على حفف % 86(@)(@@) % أنسيتنا جود حاتم وحجى % % عمرو الدواهي وحلم ذي الحنف % 87(@)(@@) % ولو تبذلت للحروب للأل % فيت شبيها بالليث ذي الغضف % 88(@)(@@) % لا سبط الخطو في المهارب حا % % شاك ولكن في كل مزدحف % % 89(@)(@@) % خذها مديحا كأنه وشح الد % در إذا ما جرت على الهيف % % 90(@)(@@) % أحلى مذاقا على اللسان من الش % هد بماء الغمام في الرصف % % PageV01P2884 91(@)(@@) % مدح رأى أنك الكفي له % % فلم يجد عنك وجه منصرف % % 92(@)(@@) % وكل مدح يقال فيك إلى الت % تقصير أدنى منه إلى السرف % % 93(@)(@@) % نهدي لك الشعر ثم نحقره % وإن غدا من نفائس التحف % % 94(@)(@@) % لأنه ليس فيك من بدع ال % % أشياء كلا ولا من الطرف % % 95(@)(@@) % ولا نرى أنه يزيدك في % % مجدك من متلد ومطرف % % 96(@)(@@) % ما يرفع الشعر أو يشرف من % % بدر بزهر النجوم مكتنف % % 97(@)(@@) % ينزل من مجده وسؤدده % % بين قديم وبين مؤتنف % % PageV01P2885 البحر : - 1(@)(@@) % دهر علا قدر الوضيع به % % وهوى الشريف يحطه شرفه % 2(@)(@@) % كالبحر يرسب فيه لؤلؤه % % سفلا وتطفو فوقه جيفه % % 3(@)(@@) % فاصبر على هول الخطوب لها % % قلب نماه إلى العلا سلفه % 4(@)(@@) % لا مظهرا في عقب نائبة % أسفا وليس يقوده شعفه % % 5(@)(@@) % طوع الصديق يقود ربقته % % لا بطؤه يخشى ولا عنفه % % 6(@)(@@) % نكل العدو يرى به أسفا % جهما عبوسا موحشا كنفه % % 7(@)(@@) % فلقل ما أنحت على أحد % بالجور إلا سوف تنتصفه % % PageV01P2886 البحر : - 1(@)(@@) % له شمالان حاز إرثهما % % عن ذي اليمينين شد ما اختلفا % % 2(@)(@@) % ما أبين اليمن في نقيبته % % على أعاديه حيث ما انصرفا % % 3(@)(@@) % بجود ما انقادت البلاد له % % حتى إذا ما استثارها ضعفا % % 4(@)(@@) % كأنه الدهر من هزائمه % % يلعنه الله أينما ثقفا % % PageV01P2887 البحر : - 1(@)(@@) % لا زلت غوثا إذا ناداك ملهوف % بحيث أنت ومن والاك مكنوف % 2(@)(@@) % تا لله ما ضاع معروف نفحت به % % نحوي ولا بار مدح فيك موصوف % % 3(@)(@@) % قد قلت إذ طلعت نعماك تخبرني % % إني بفضلك ما عمرت ملحوف % 4(@)(@@) % لا يعتبد أحد شعري بنائله % % فإنه بأبي العباس مظلوف 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms661# % 5(@)(@@) % أيقنت إذا وامضتني منك بارقة % أني بسيبك مربوع ومخروف % 6(@)(@@) % ما زلت أذكر معروفا بعثت به % % خلفي وقصرك بالمداح محفوف % 7(@)(@@) % والفلس رب يخر الساجدون له % % والشعر منصرف عنه ومصروف % 8(@)(@@) % وآمرين بغير الرشد قلت لهم % % لا ألفظ العذب إن العذب مرشوف % % 9(@)(@@) % تالله أبى قليلا طاب ملبسه % % وهل قليل مسوس الماء معيوف % % 10(@)(@@) % أليس قد جاءني والطير ساكنة % والنفس آمنة والوجه مكفوف % % PageV01P2888 11(@)(@@) % أني أرتب شعري فوق نافلة % عاجت علي ووجه الرزق مصروف % % 12(@)(@@) % لئن زهوت بشيء لا زمان له % % إني إذا لزهيد الرأي مضعوف % % 13(@)(@@) % لو كنتم من ذوي التمييز أعجبكم % % زو ج إلى زوجة تهواه مزفوف % % 14(@)(@@) % عرف يزف إلى كف مدفعة % طرف العيون بنور الله مطروف % % 15(@)(@@) % ما أستقل قليلا أنت باذله % % ذكراك إياي بالمعروف معروف % % 16(@)(@@) % أليس قد لاحظتني منك خاطرة % إن الشريف لمن دوني لمشروف % % 17(@)(@@) % وجهت نحوي معروفا تعاظمني % % إلا لقدرك إن الحق مكشوف % % 18(@)(@@) % والعود أحمد قول قد جرى مثلا % وعرف مثلك بالعودات موصوف % % 19(@)(@@) % فأجره لي إن النفس قد ألفت % آثار كفيك والمعروف مألوف % 20(@)(@@) % لا ينقطع وثنائي غير منقطع % كلا بل الحسي قبل البحر منزوف % PageV01P2889 21(@)(@@) % جدواك أكرم من أن لا أصادفها % % وقفا ومدحي عليك الدهر موقوف % 22(@)(@@) % قد سار باسمك مدح لم أوفكه % % وقد يبلغك الغايات محذوف % 23(@)(@@) % فاكمل بحيث ترى فيه نقيصته % % فالبدر واف بحيث الشهر منصوف % 24(@)(@@) % يا أحمد الخير يا من لا يعد له % % بدء جميل بسوء العود مخلوف % 25(@)(@@) % سلم من الريث والإقلاع جائزتي % % فالعرف بالريث والإقلاع مأووف % 26(@)(@@) % وما أزيدك إقبالا على كرم % وإن غدا وهو عند الناس مشنوف % % 27(@)(@@) % أنت الذي لو سكنا ظل يعطفه % لين المهز إذا ما اكتز معطوف % % 28(@)(@@) % قد كان يحميك حمد لناس علمهم % بأن قلبك بالمعروف مشعوف % % 29(@)(@@) % وواضع قدما في المجد قلت له % % إن المقام الذي حاولت زحلوف % % 30(@)(@@) % خل العلا لأبي العباء يكفكها % % وألعب فحسب وليد الحي خذروف % % PageV01P2890 31(@)(@@) % فتى له عزمات في مذاهبه % % تمضي فتقضي وصف الزحف مصفوف % 32(@)(@@) % يا من يعاديه مهلا إنه رجل % مزلزل بأعاديه ومخسوف % 33(@)(@@) % يكيد فالسيف مقطوع هناك له % % والدرع مهتوكة والرمح مقصوف % 34(@)(@@) % فقرنه الدهر مغلوب وهاربه % % طلب 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms662# ولو حملته الريح مثقوف % 35(@)(@@) % سالمه تسلم وإن خالفت موعظتي % % فأنت في مخلب العنقاء مخطوف % 36(@)(@@) % خذها فإنك أخاذ نظائرها % % منوه بك في العزاء مهتوف % % 37(@)(@@) % يا أجبن الناس من ذم وأجرأهم % % والجيش بالجيش في الهيجاء ملفوف % % 38(@)(@@) % يا راعيا أصبح القوم الخماص به % % في بطنة ما لمن ضافته شرسوف % 39(@)(@@) % وليت أمرا فلا المرعي أمانته % % فيها مخون ولا المرعي معسوف % 40(@)(@@) % يا من إذا اختبرت يوما مذاقته % % ففيه طعمان معسول ومذعوف % PageV01P2891 41(@)(@@) % يا من معاطفه لا الصم حاش له % % ولا مكاسره الخوارة الجوف % % 42(@)(@@) % أدعوك دعوة ملهوف معولة % وكم أجيب بغوث منك ملهوف % % 43(@)(@@) % وإنني لأرجي منك تلبية % وذاك في قلب من يدعوك مقذوف % % 44(@)(@@) % كأنني بك قد ألبستني نعما % كأنها الفوف لا بل دونها الفوف % 45(@)(@@) % ولان لي كل شيء بعد قسوته % % فالجذع جمارة والعظم غضروف % PageV01P2892 البحر : - 1(@)(@@) % أنا غيران ولا زوجة لي % % بل على النعمة عند ابن خلف % 2(@)(@@) % ويمين الله لو أن يدى % % ملكت تنكير نكر ما طرف % 3(@)(@@) % أسفي لو أن قولي أسفي % % كان يشفيني من حر الأسف % 4(@)(@@) % كيف لا يغضب حر ماجد % فاتك الهمة من أهل الأنف % % 5(@)(@@) % يا بني العباس أنتم عترة % % طهرت من كل رجس ونطف % % 6(@)(@@) % قد رمى الناس به أختكم % من سفيه وحليم مستخف % % 7(@)(@@) % زعموا لما رأوا أختكم % أسرفت في أمره كل السرف % % 8(@)(@@) % إن هذا الأمر أمر معور % دونه ستر رقيق المستشف % % 9(@)(@@) % ولقد مانوا وقالوا باطلا % غير أن السهم قد ناغى الهدف % % 10(@)(@@) % فاغسلوا العار الذي ليط بكم % % بدم الخلال غسلا في لطف % % PageV01P2893 11(@)(@@) % لهف نفسي أن علجا مثله % % ناعم البال وأنتم في شظف % 12(@)(@@) % وله آنية من فضة % بعدما كانت رواقيد خزف % % 13(@)(@@) % لو تراه ثانيا من عطفه % % مائلا في السرج من فرط الصلف % 14(@)(@@) % شامخا بالأنف من نخوته % % فهو لم يسترعف الخل رعف % 15(@)(@@) % لرأت عيناك منه عجبا % منسيا كل عجيب مطرف % % 16(@)(@@) % نحن أحياء على الأرض وقد % % خسف الدهر بنا ثم خسف % % 17(@)(@@) % أصبح السافل منا عاليا % وهوى أهل المعالي والشرف % % 18(@)(@@) % رب أنصفني من الدهر فما % % لي إلا بك منه منتصف % % 19(@)(@@) % فاستجب يا رب وارحم دعوة % من لهيف القلب ذي دمع 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms663# ذرف % % 20(@)(@@) % وأدلنا من زمان جائر % واسمعن يا رب منا وانتصف % % PageV01P2894 21(@)(@@) % من غشوم كلما لنا له % % زاد بغيا وتمادى في العنف % % 22(@)(@@) % كأخي الثأر الذي قد فاته % % طلب الثأر فأضحى ذا أسف % % 23(@)(@@) % يسفل الناس ويعلو معشر % قارفوا الأقراف من كل طرف % % 24(@)(@@) % ولعمري إن تأملناهم % ما علوا لكن طفوا مثل الجيف % % 25(@)(@@) % جيف تطفو على بحر الغنى % % حين لاتطفو خبيئات الصدف % % PageV01P2895 البحر : - 1(@)(@@) % ليوقن من يعارضني بأني % % سأرهق ما بنى مبنى منيفا % % 2(@)(@@) % فإن أربى علي بنيت قصرا % يطول بسوره الشرف الشريفا % % 3(@)(@@) % فإن أربى علي بنيت طودا % يجوز النجم والسقف المطيفا % % 4(@)(@@) % نظرت بعين إنصاف وعدل % فلم أر قط ميزاني خفيفا % % 5(@)(@@) % ولم أر هائبي إلا قويا % ولا مستضعفي إلا سخيفا % % 6(@)(@@) % فتى الكتاب لا تعرض لشعري % % فتظلم صاحبا مولى حليفا % % 7(@)(@@) % أعد نظرا وكن حكما فإني % % أراك فقيه طائفة حنيفا % % 8(@)(@@) % وقل في صاحب لم يلف إلا % % حكيما في مذاهبه ظريفا % % 9(@)(@@) % أريبا في مآربه أديبا % لبيبا في مخاطبه حصيفا % % 10(@)(@@) % نزيها في مطالبه نبيها % عفيفا في مكاسبه نظيفا % % PageV01P2896 11(@)(@@) % شريفا في مناسبه عريقا % خفيفا في ملاعبه ذفيفا % % 12(@)(@@) % تفرد بالكتابة ثم أضحى % % ينازعني القريض لكي يحيفا % % 13(@)(@@) % حوى دوني الحليلة ثم أنحى % % يريغ إلى حليلته اللطيفا % % 14(@)(@@) % كرب التسع والتسعين أضحى % % ينازع رب واحدة صعيفا % % 15(@)(@@) % إخالك تؤنس العدوان منه % % وترضى بالملام له رديفا % % 16(@)(@@) % وأنت الخصم والحكم المنادى % % فقل سددا وأنجد مستضيفا % % 17(@)(@@) % وسدد في معاملتي وقارب % ولا تك في محاربتي عنيفا % % 18(@)(@@) % ولا تعرض لواحدتي وأقبل % % على الكبرى وكن رجلا عفيفا % % 19(@)(@@) % ولم أمنعك ورد البحر كلا % % ولا إلطافه اللطف الطريفا % % 20(@)(@@) % ولكن دع زحامي في طريقي % % فإنك واجد سعة وريفا % % PageV01P2897 21(@)(@@) % وإن لم تهو إلا السير فيه % % فإنك لن تصادفه مخيفا % % 22(@)(@@) % رضيت وإن قذيت بكل شيء % رضيت به ولم أخلق طفيفا % % 23(@)(@@) % فدونك طاعتي وصريح ودي % % وهبت لك الوصيفة والوصيفا % % 24(@)(@@) % ولو خصم سواك أراد ظلمي % % لأسمعت الأصم له حفيفا % % 25(@)(@@) % بأمثال من المثلات شنع % تسير فتخرق الأفق المطيفا % % PageV01P2898 البحر : - 1(@)(@@) % يا آل وهب ألا ينهى سماحكم % % إلحاح كل ملث الودق وكاف % 2(@)(@@) % أآنس الغيث ضعفا من أكفكم % بل ساجلته فاغرته بإسراف % 3(@)(@@) % شبهته بنداكم 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms664# عند غتكم % % بفضلكم كل إسراف وإلحاف % 4(@)(@@) % تالله أجهل ما عقبى مؤملكم % علمي بفوز يديه علم عراف % % 5(@)(@@) % أصبحتم شأتكم إثبات أجنحة % % وشأن سابور قدما نزع أكتاف % 6(@)(@@) % من ذا يساويكم أمن يقاربكم % % في رحب أفنية أو لين أكناف % % 7(@)(@@) % أو حلم أندية أو خصب أودية % أو طيب أردية أو حسن أعطاف % % 8(@)(@@) % كفيتمونا خطوبا لا كفاء لها % % يا آل وهب كفانا فقدكم كافي % % 9(@)(@@) % فإن قدمت خوفا جر منا % وإن قدمت أمنا جر خوفا % % 9(@)(@@) % ولم نر قط أغدر من زمان % ولا بنذوره في الغدر أوفى % % PageV01P2899 9(@)(@@) % فكم عللن قبلي من قرون % إلى أن شافها الحدثان شوفا % % 9(@)(@@) % نذيري من عسى ولعل نسي % % ومن أختيهما حتى وسوفا % % 9(@)(@@) % ما نسأل الدهر إتحافا بغيركموافرنذيري من عسى ولعل نسيومن أختيهما حتى وسوفا فكم عللن قبلي من قرون إلى أن شافها الحدثان شوفا ولم نر قط أغدر من زمان ولا بنذوره في الغدر أوفى فإن قدمت خوفا جر منا وإن قدمت أمنا جر خوفا % % فأنتم كل إتحاف وإتراف % % PageV01P2900 البحر : - 1(@)(@@) % عسى ولعل طيبتا حياتي % % وصاحبتاهما حتى وسوفا % % 2(@)(@@) % تبشرني بروح الله بشرى % % تشوف عن القلوب الهم شوفا % % 3(@)(@@) % ولولا أنها لي مستراح % ظللت محالفا حزنا وخوفا % % 4(@)(@@) % وذاف لي القنوط لذيذ عيش % % بمر الصاب والذيفان ذوفا % % 5(@)(@@) % إذا ولما جشمت ولا ركابي % % رجاء الخير تجوالا وطوفا % % 6(@)(@@) % أرى الشيطان يوعدني شرورا % ووعد الله بالخيرات أوفى % % PageV01P2901 البحر : - 1(@)(@@) % لا تلحيني في المنطق السخيف % فإنني في حالة اللهيف % % 2(@)(@@) % أصبحت أغنى الخلق عن كنيف % وأحوج الناس إلى رغيف % 3(@)(@@) % فجد على عبدك بالطفيف % % إلى مجيء الصفد الشريف % % 4(@)(@@) % فإنني في قبضتي عنيف % % وتحت وطء ليس بالخفيف % % PageV01P2902 البحر : - 1(@)(@@) % يدافع آناء الملالة وجهه % ويختدع العين اختداع الزخارف % 2(@)(@@) % إذا غبنتني طرفتي منه نظرتي % % تمنيت عينا جفنها غير طارف % 3(@)(@@) % فليت جفون العاشقين تغمدت % عيونهم من قبل جري المعارف % % PageV01P2903 البحر : - 1(@)(@@) % أبا علي طلبت عيبك ما اس % % طعت فألفيت عيبك السرفا % % 2(@)(@@) % وذاك عيب كأنه ذفر ال % % مسك إذا شم نشره رشفا % % 3(@)(@@) % أو ديمة الغيث كلما طمع الط % طامع في أن يكفها وكفا % % 4(@)(@@) % وحبذا أن يكون عيب فتى % عيبا إذا مر 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms665# ذكره شغفا % % 5(@)(@@) % ولم يكن يا أخا العلا طلبي % % عيبك لا بغضة ولا شنفا % % 6(@)(@@) % لكن لإشفاق نفس ذي مقة % ما زال عن ودكم ولا انحرفا % % 7(@)(@@) % أبصر أشياء فيك منفسة % إذا رآها مذمم لهفا % % 8(@)(@@) % يصبح من أخطأته ذا أسف % ومن رأى الحظ فائتا أسفا % % 9(@)(@@) % وإنني خفت أن تصيبك بال % % عين عيون تقرطس الهدفا % % 10(@)(@@) % فارتدت عيبا يكون واقية % فلم أجده ألية حلفا % % PageV01P2904 11(@)(@@) % فقلت في الله ما وقى رجلا % إن ميح أعفى وإن أريب عفا % % 12(@)(@@) % كان له الله حيث كان ولا % % زالت يميناه حوله كنفا % % 13(@)(@@) % صدقت فيما صدقت من طلبي % % فيك معابا ولم أزد ألفا % % 14(@)(@@) % يا حسن الوجه والشمائل وال % % أخلاق والعقل كيفما انصرفا % % 15(@)(@@) % يا من إذا قلت فيه صالحة % عند عدو أقر واعترفا % % 16(@)(@@) % عندي عليل أرد منته % % بطيب الطيب كلما ضعفا % % 17(@)(@@) % فابعث بشيء من البخور له % % كبعض معروفك الذي سلفا % % 18(@)(@@) % ولتك أنفاسه تشاكل ذك % % راك وحسبي بطيبها وكفى % % 19(@)(@@) % من ندك الفاخر المفضل في الن % ند على غيره إذا وصفا % % 20(@)(@@) % ذاك الذي لو غدا يفاخره % نسيم نور الرياض ما انتصفا % % PageV01P2905 21(@)(@@) % ولا يكن دخنة المعزم لل % % عفريت من شم نشرها رعفا % % 22(@)(@@) % لا تدخلن الجفاء في لطف % فربما ألطف امرؤ فجفا % % 23(@)(@@) % حاشاك من ذاك في ملاطفتي % % يا ألطف الناس كلهم لطفا % % 24(@)(@@) % أطب وأقلل فإن أطبت وأك % % ثرت نصيبي فيا له شرفا % % 25(@)(@@) % وليس يروي كثير مائك بل % % ما طاب منه لشارب وصفا % % 26(@)(@@) % إن الكثير الخبيث مقتحم % في العين والقلب يبعث الأنفا % % 27(@)(@@) % ولا تلمني على اشتطاطي في ال % % حكم ولا في سؤالك الترفا % % 28(@)(@@) % من حسن الله وجهه وسجا % % ياه وأعطاه كلف الكلفا % % 29(@)(@@) % وجهك ذاك الجميل سحبني % % عليك حتى سألتك التحفا % % 30(@)(@@) % وحسبنا أن كل ذي كرم % إذا ركبت المكارم ارتدفا % % PageV01P2906 31(@)(@@) % يا در العقد إن لي فكرا % تفلق عن در مدحك الصدفا % % 32(@)(@@) % فاسع لشكري تجده حينئذ % شكر قدير تعجل الخلفا % % PageV01P2907 البحر : - 1(@)(@@) % سقته ابنة العمري من خمر عينها % % ووجنتها كأسا تميت وتدنف % 2(@)(@@) % فقل أمزجيها بالرضاب لعله % % يسكن من سكر الهوى ويخفف % 3(@)(@@) % فصدت مليا ثم جادت بريقة % يزيد لها سكر المحب فيضعف 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms666# % 4(@)(@@) % فراح بضعفي سكره من مزاجها % % وقد تسأل العدل الولاة فتعسف % 5(@)(@@) % فهل من مزاج زاد في سكر شارب % سوى ريق ذات الخال أم لست تعرف % PageV01P2908 البحر : - 1(@)(@@) % تكايدنا شنطف % وشعرتها تنطف % 2(@)(@@) % فتنثر أبعارها % % وترصف ما ترصف % 3(@)(@@) % تقول بلا كلفة % وتكلف ما تكلف % 4(@)(@@) % أعدوا إذا أندرت % سمادية تجرف % 5(@)(@@) % مشوهة قحبة % عنابلها تنقف % % 6(@)(@@) % يهملج تقحيبها % % وتكريعها يقطف % % 7(@)(@@) % إذا فقدت فسوها % % فأنفاسها تخلف % % 8(@)(@@) % تشرف بالموبقا % % ت لو أنها تشرف % % 9(@)(@@) % ولو أنها في القيو % % د تحجل أو ترسف % 10(@)(@@) % لهامت إلى مدمج % لها منه أحرف % PageV01P2909 11(@)(@@) % تظل إذا خاضها % % وأحشاؤها ترجف % 12(@)(@@) % وتقوى على دسه % % وعن سله تضعف % % 13(@)(@@) % على أنها لا تنا % % ك بالغرم أو تلطف % % 14(@)(@@) % تراها إذا شوهدت % % وصفاعها يعنف % 15(@)(@@) % ومن ذا يرى قردة % % تغني فلا يسخف % 16(@)(@@) % أشنطف ما يشتهي % % جماعك من يظرف % 17(@)(@@) % ولا أنت ممن يرو % % ق عينا ولا يطرف % % 18(@)(@@) % نأى القبح عن يوسف % % وأنت له يوسف % PageV01P2910 البحر : - 1(@)(@@) % إن فطرا حيا الخليفة بالنر % % جس والعرس حق فطر ظريف % 2(@)(@@) % يلتقي فيه بالسعادة واليم % % ن شريف البنى وبنت شريف % % 3(@)(@@) % قمر العالمين تهدى إليه الش % مس في جلة من التتريف % 4(@)(@@) % بنت مولاه أخت مولاه لا شك % ك السديد الحصيف وابن الحصيف % PageV01P2911 البحر : - 1(@)(@@) % بات الأمير وبات بدر سمائنا % % هذا يودعنا وهذا يكسف % 2(@)(@@) % قمر رأى قمرا يجود بنفسه % % فبكى عليه بعبرة لا تذرف % 3(@)(@@) % لهفي لفقد محمد من هالك % ولمثله يتلهف المتلهف % % 4(@)(@@) % فتكت به الأيام وهي عليمة % أن سوف تتلف منه مالا تخلف % % 5(@)(@@) % ورمته إذ وضع السلاح وطال ما % % هابته وهو لنبلها مستهدف % % 6(@)(@@) % أجدر بمغتر بعيش خانه % % أن لا يزخرفه لديه مزخرف % PageV01P2912 البحر : - 1(@)(@@) % لم أر شيئا صادقا نفعه % % للمرء كالدرهم والسيف % 2(@)(@@) % يقضي له الدرهم حاجاته % % والسيف يحميه من الحيف % PageV01P2913 البحر : - 1(@)(@@) % الشيب أحلم والشبيبة أظرف % والرشد أسلم والغواية أترف % 2(@)(@@) % ذهب الشباب فبان ما لا يرتجى % % وأتى المشيب فجاء ما لا يصرف % 3(@)(@@) % وكلاهما لابد منه لمن نجا % % من أن يعاجله ردى مستسلف % 4(@)(@@) % والمرء أما من مخاوف دهره % % فحرى وأما بالمنى فمسوف % % 5(@)(@@) % ولربماعدلت عليك صروفه % فأصابك المأمول والمتخوف % % 6(@)(@@) % أصبحت أنظر في الأمور فأجتوي % % منها عيوب عواقب 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms667# تتكشف % % 7(@)(@@) % والشيب أغراني بذاك ولم يزل % % يغري الغوي برشده ويعنف % % 8(@)(@@) % عجبا لذمي ما يزيد هدايتي % % غضبا لآخر كان بي يتعسف % % 9(@)(@@) % سقت الشباب سجال غيث وكف % % يروينه وسجال دمع ذرف % 10(@)(@@) % وأظل أزمانا خلت ومعاهدا % ورق تظل غصونه تتعطف % % PageV01P2914 11(@)(@@) % أيام ينسيني الخطوب وذكرها % % شرخ الشبيبة والصبا والقرقف % % PageV01P2915 البحر : - 1(@)(@@) % يا ليت شعري والحوداث جمة % أرضيت من بعد الندى بحليف % % 2(@)(@@) % لا يلف وعدك والبنفسج كاسمه % % في حلية التنكير والتصحيف % % PageV01P2916 البحر : - 1(@)(@@) % وقف الهوى بك بعد طول وجيفه % % وأفاق من يلحاك من تعنيفه % % 2(@)(@@) % ولقد يروقك بارتجاج نبيله % % قمر النساء وباهتزاز قضيفه % % 3(@)(@@) % قبح الهوى ملك السماء فلم يزل % % دينا يدين قويه لضعيفه % % 4(@)(@@) % ولحا الصبا بعد المشيب فإنه % % شأو يريك الحر خلف وصيفه % % 5(@)(@@) % يا جارتي أودى بياض مسرحي % % وبريقه بسواده ورفيفه % % 6(@)(@@) % والشيب ضيف لا يزال موكلا % % بمعقة ومساءة لمضيفه % % 7(@)(@@) % وأرى قوامي لج في تقويسه % % ولقد يلج اللين في تعطيفه % % 8(@)(@@) % إن يحمني بيض المشيب وشيبه % % مرعاي من بيض الشباب وهيفه % % 9(@)(@@) % أو يقرني دهري مذيق حليبه % % فلقد قراني من وري سديفه % % 10(@)(@@) % ومنعم كالماء يشفي ذا الصدى % % كشفائه ويشف مثل شفيفه % % PageV01P2917 11(@)(@@) % ممن له حسن الرحيق وطيبه % % ومراح شاربه ومشي تريفه % % 12(@)(@@) % تلقى جنى التفاح في وجناته % % وترى جنى العناب في تطريفه % % 13(@)(@@) % متعت منه مسامعي ومراشفي % % بنثير لؤلئه وماء رصيفه % % 14(@)(@@) % رويت سامعتي من ترجيعه % % بيتي زياد في سقوط نصيفه % % 15(@)(@@) % وطفقت أرشف ريقه عن ثغره % % حتى شفيت جوى الهوى برشيفه % % 16(@)(@@) % فالآن بدل صحوه من لهوه % % لاه وطول عزوفه بعزيفه % % 17(@)(@@) % أنى لذي شيب نسيم نسيمه % % أنى له التتريف من تنريفه % % 18(@)(@@) % نسخ الزمان سخافة بحصافة % فأتى حصيف الرأي دون سخيفه % % 19(@)(@@) % وطوى المشيب تغزلي بتجملي % % فطوى لذيد تمتعي بعفيفه % % 20(@)(@@) % ما زال مرتاد الزمان مطوفا % حتى أصاب الرشد في تطويفه % % PageV01P2918 21(@)(@@) % عفى بإسماعيل في شيبانه % % ما كان من حجاجه وتثقيفه % % 22(@)(@@) % لبس الزمان من الوزير وعهده % % بردا تحار العين من تفويفه % % 23(@)(@@) % ناهيك من حسن الرواء جميله % % عف المغيب في الخلاء نظيفه % % 24(@)(@@) % أوليس تطريف الزمان بمثله % % ما شئت أو ما شاء من تطريفه % % 25(@)(@@) % خص الوزير ببيت مجد زاده % % بيديه تشريفا على 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms668# تشريفه % % 26(@)(@@) % لو لم يسقف بالسماء بناؤه % % عجزت ظلال المزن عن تسقيفه % % 27(@)(@@) % يا حاسبا حسب الوزير وحقه % % أن يعجز الحساب عن تنصيفه % % 28(@)(@@) % أنى تروم يداك إحصاء الحصى % % ويداه دائبتان في تضعيفه % % 29(@)(@@) % لم يخل دهر فيه إسماعيله % من أمن خائفه وخوف مخيفه % % 30(@)(@@) % منجاة هاربه محل طريده % % منهاة طالبه غياث لهيفه % % PageV01P2919 31(@)(@@) % قدر يبور المترفون بسيفه % % بحر يلوذ المعتفون بسفينه % % 32(@)(@@) % وهب الزمان له فضائل نفسه % % ورجاله فحكاه في تصريفه % % 33(@)(@@) % لا حزم قشعمه تراه يفوته % % في النائبات ولا شذى غطريفه % % 34(@)(@@) % وكأنما إشراقه وسماحه % % إغداق مشتاه وصحو مصيفه % % 35(@)(@@) % وترى له نعما كجو ربيعه % % وكروضه وكطيبات خريفه % % 36(@)(@@) % بسطت يداه العدل في سلطانه % % حتى استوى بدنيه وشريفه % % 37(@)(@@) % جزي الوزير عن الرعية صالحا % بنواله والرفق في تثقيفه % % 38(@)(@@) % يعد العقوبة فهي في تأخيره % % ويرى المثوبة فهي من تسليفه % % 39(@)(@@) % يا سائلي عن جوده بجزيله % % ورضاه من شكر امرىء بطفيفه % % 40(@)(@@) % أضحى حليفا للسماح ولم يكن % % ليراه ربك غادرا بحليفه % % PageV01P2920 41(@)(@@) % نغدو بمدح فيه أيسر حقه % % فنحوز كل تليده وطريفه % % 42(@)(@@) % واسوأتي والله من تطفيفه % % إذ لا تخاف هناك من تطفيفه % % 43(@)(@@) % نمتاحه والجور في توظيفنا % % ويسوسنا والعدل في توظيفه % % 44(@)(@@) % متطول نشتط في تكليفنا % % أبدا ولا يشتط في تكليفه % % 45(@)(@@) % أمواله وقف على تثقيلنا % % وثناؤنا وقف على تخفيفه % % 46(@)(@@) % وبه نحوك الشعر فيه لأننا % % تبع لمفتقر الفعال مقيفه % % 47(@)(@@) % يبني العلا ونقول فيه فإنما % % تأليفنا يحذى على تأليفه % % 48(@)(@@) % عجبا له أنى يشيب معاشرا % يتعلمون الشعر من توقيفه % % 49(@)(@@) % كم جاد فيه من مديح لم يجد % عن نحت شاعره ولا تحذيفه % % 50(@)(@@) % غيث نعيش بصوبه ونرى العدى % % ضعفين تحت لهيبه ورجيفه % PageV01P2921 51(@)(@@) % متبادرين قصيفه بوميضه % % متناذرين حريقه بقصيفه % % 52(@)(@@) % ليث تراعى الوحش حول حريمه % % وترى الأسود مجانبات غريفه % % 53(@)(@@) % متبادرات دليفه بزئيره % % متناذرات وثوبه بدليفه % 54(@)(@@) % كم قد نجا منه الرفيق وما نجا % % منه العنيف بلفه ولفيفه % % 55(@)(@@) % كالريح والزرع استكان لمرها % % وعتت فلم تقدر على تقصيفه % % 56(@)(@@) % وتماتن الجزع الأبي مهزه % % فأتت عليه ولم ترع بحفيفه % % 57(@)(@@) % ملك تضمن لي بلوغ محبتي % % عند اعتلال الدهر أوتخويفه % % 58(@)(@@) % فإذا رهبت أقلني في ربعه % % وإذا رغبت أحلني في ريفه % % 59(@)(@@) % ما قلت 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms669# فيه كأن إلا أعوزت % أشباهه فعجزت عن تكييفه % % 60(@)(@@) % لكنني استفرغت في تشبيهه % % جهد المطيق وحدث عن تحريفه % % PageV01P2922 61(@)(@@) % فأريت معناه العقول كما يرى % % معنى كلام المرء في تصحيفه % % 62(@)(@@) % ولواصف في جملة من وصفه % % شغل لعمر أبيك عن تصنيفه % % 63(@)(@@) % يا من إذا ناديته بصفاته % % دون اسمه بالغت في تعريفه % 64(@)(@@) % كم ظل يأس مطبق كشفته % % عند اعتقاد اليأس من تكشيفه % % 65(@)(@@) % بك طيف تدبير يكيف لطفه % % سدا صلاح الناس في تكييفه % % 66(@)(@@) % يبني الكثيف من اللطيف وإنما % % تكثيف ذي التحصين من تلطيفه % % 67(@)(@@) % متخصرا قلما نحيفا جسمه % % في وزن ضخم الشأن غير نحيفه % % 68(@)(@@) % لله أي مصدر ومردف % يهتز بين ثقيله وخفيفه % % 69(@)(@@) % ناهيك عن صدر ومن تسنينه % % ناهيك من ردف ومن تسنيفه % % 70(@)(@@) % كسي المهابة كلها بغنائه % % في كل نازل مضلع ومطيفه % % PageV01P2923 71(@)(@@) % فترى السنان يلوح في تصديره % % وترى الحسام يلوح في ترديفه % % 72(@)(@@) % وظليم أسفار إذا افترش الفلا % % بارى الظليم فزف مثل زفيفه % % 73(@)(@@) % كلفته حملي إليك فخف بي % % وابتاع خطوته بقرب أليفه % % 74(@)(@@) % يممت وجهك أهتدي بنجومه % % عند احتشاد الليل في تسجيفه % % 75(@)(@@) % وصدت عما قال فيك مجرب % لا عن مقالة عائف ومعيفه % % 76(@)(@@) % ومؤمل أغنيته ومؤمل % رجى غناك لججت في تسويفه % % 77(@)(@@) % لم تأل في تقديم مالك غائظا % لمسابق لم تأل في تخليفه % % 78(@)(@@) % فاسلم وكن أبدا أمام عنانه % % سبقا وكن عمرا وراء رديفه % % 79(@)(@@) % وأما وأشراف الرجال ألية % من مخلص يغنيك عن تحليفه % % 80(@)(@@) % ليشنفنهم بمدحك صائغ % لا تكبر الآذان عن تشنيفه % % PageV01P2924 البحر : - 1(@)(@@) % رأيت الدهر يرفع كل وغد % ويخفض كل ذي شيم شريفه % % 2(@)(@@) % كمثل البحر يغرق فيه حي % ولا ينفك تطفو فيه جيفه % 3(@)(@@) % أو الميزان يخفض كل واف % ويرفع كل ذي زنة خفيفه % 4(@)(@@) % كذلك دأبه فينا وإنا % % على ما كان في حصن منيفه % % 5(@)(@@) % بناها أولونا فاعتصمنا % % بها وبأنفس فينا عفيفه % % 6(@)(@@) % إذا ما جهله أربى علينا % % حملناه بألباب حصيفه % % 7(@)(@@) % وندرأ بؤسه بالصبر حتى % % نفرجه بأذهان لطيفه % % 8(@)(@@) % إلى أن يرحم الله المرجى % % لكل شديدة منه عنيفه % % PageV01P2925 البحر : - 1(@)(@@) % دنيا علا شأن الوضيع بها % % وهوى الشريف يحطه شرفه % 2(@)(@@) % كالبحر يرسب فيه لؤلؤه % سفلا وتطفو فوقه جيفه % 3(@)(@@) % فاصبر على 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms670# هول الخطوب لها % % قلب نماه إلى العلا سلفه % % 4(@)(@@) % لا مظهرا في عقب نائبة % أسفا وليس يقوده شغفه % 5(@)(@@) % طوع الصديق يقود ربقته % لا بطؤه يخشى ولا عنفه % % 6(@)(@@) % نكل العدو يرى به أسفا % جهما عبوسا موحشا كنفه % 7(@)(@@) % فلقل ما أنحت على أحد % بالجور إلا سوف تنتصفه % % PageV01P2926 البحر : - 1(@)(@@) % المرثديون سادات تعد لهم % % من وائل مأثرات المجد والشرف % 2(@)(@@) % تصرم المجد بالأقوام عن هرم % ومجدهم حدث في العين أو نصف % 3(@)(@@) % وما علي بن عبد الله إن وردت % % جماته بثماد الضحل تنتزف % 4(@)(@@) % متى وصفناه ألفينا محاسنه % % من الوفور على أضعاف ما نصف % 5(@)(@@) % تفديك أنفس ملتاحين أعينهم % معلقات بري منك يؤتنف % 6(@)(@@) % سقيا الزجاج وإن جلت مصردة % فسقناها عليها القار والخزف % 7(@)(@@) % أنتف لنا لهو أيام نعيش بها % % فالدهر أجمع إن راعيته نتف % % PageV01P2927 البحر : - 1(@)(@@) % يا أيها النفر الذين تعجبوا % % من قصة امرأة العزيز ويوسف % % 2(@)(@@) % هاتيكم فتنت بأحسن من مشى % % ممن عرفناه ومن لم نعرف % % 3(@)(@@) % وبحقها وبحقه فتنت به % % أنثى وأغيد كالقضيب الأهيف % 4(@)(@@) % فدعوا التعجب منهما وتعجبوا % % من قشعمين كلاهما كالأسقف % 5(@)(@@) % فتن المهرم بالمشيخ منهما % % قل لي فأية طرفة لم أطرف % % 6(@)(@@) % بايته في بيته فأملني % % يشكو إلي هوى عميد مدنف % 7(@)(@@) % شيخ يراود مثله وكلاهما % % قد زحزح السبعين عنه بنيف % % 8(@)(@@) % ما زال ينشرني ويلثم فيشتي % % حتى ركبت قرا حمار أعجف % % 9(@)(@@) % كشفت منه ثيابه عن سوءة % شوهاء شقت عن عجان أعرف % % 10(@)(@@) % وكأن شيب عجانه حول استه % % بدد الخليط على جوانب معلف % % PageV01P2928 11(@)(@@) % قاسيت منه ليلة مذكورة % لولا دفاع الله لم تتكشف % 12(@)(@@) % فكأن ليلته علي لطولها % % باتت تمخض عن صباح الموقف % % PageV01P2929 البحر : - 1(@)(@@) % إذا ضحكتم ضحكنا في مفارحكم % وإن بكيتم فمنا الأدمع الذرف % 2(@)(@@) % وإن رضيتم رضينا عن مسالمكم % % وإن غضبتم فنحن الشيعة الأنف % 3(@)(@@) % حتى إذا ما رتعتم في ربيعكم % فنحن إذ ذاك فيه وحدنا العجف % 4(@)(@@) % يا رب عهد ووعد من ذوي كرم % % يستهلكان ويبقى الغدر والخلف % 5(@)(@@) % حتى متى تتقضى دولة أنف % يا أهل ودي وتأتي دولة أنف % % 6(@)(@@) % وليس منكم لمن يرجو منافعكم % % في العسر واليسر إلا الرد والحلف % % 7(@)(@@) % كأنكم قد نسيتم والذكاء لكم % % أن الكرام 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms671# إذا ما استعطفوا عطف % % 8(@)(@@) % أتشبعون ونطوي في جواركم % من عسرة تلد الإخوان لا الطرف % PageV01P2930 البحر : - 1(@)(@@) % أبا الفضل لا تحتجب إنني % % صفوح عن المخلف الوعد عافي % % 2(@)(@@) % وإني إذا لم يجد صاحبي % % بجدواه قابلته بالعفاف % 3(@)(@@) % أمنت أمنت فلا تحفل % % ن لي باختلاف ولا بانصراف % % 4(@)(@@) % ثكلت أخاك فهو العز % % يز إن لم أصن رغبتي في غلاف % % 5(@)(@@) % وإن لم أصم بعدها مدتي % % من الكشك ما دام في الناس جافي % % 6(@)(@@) % سألتك لا حاجة فاحتجز % % ت مني وطالبتني بالكفاف % % 7(@)(@@) % كأني سألتك قوت العبا % % د في سنة البقرات العجاف % 8(@)(@@) % قليت الرجال أشد القلى % % وعفت جداهم أشد العياف % % 9(@)(@@) % مدحتك مدح امرىء واثق % ومولى وصول وخل مصافي % % 10(@)(@@) % فكافأتني بازورار يفو % % ق كل ازورار وكل انحراف % PageV01P2931 11(@)(@@) % وأصبحت ملتحفا عندها % % على ما ملكت أشد التحاف % 12(@)(@@) % كأني كتفتك لما حلل % ت فيك لساني أشد الكتاف % 13(@)(@@) % وقد كنت خلتك مثل الفرا % % ت لا تمنع الري من ذي اغتراف % 14(@)(@@) % وما كنت أحسب أني لدي % % ك من طرز أهل الرثاث الخفاف % % 15(@)(@@) % سألت فقيزين من حنطة % فجدت بكد من المنع وافي % % 16(@)(@@) % وأتبعت منعك لي بالحجا % % ب مهلا هديت ففي المنع كافي % % 17(@)(@@) % سألتك حبا لكشك القدو % % ر أنسا بتلك السجايا الظراف % % 18(@)(@@) % فماطلتني ثم راوغتني % % فكدرت من ودنا كل صافي % % 19(@)(@@) % كأني سألتك حب القلو % % ب ذاك الذي من وراء الشغاف % % 20(@)(@@) % أخفت المجاعة يا هاشمي % ي متهما لأمان الآلاف % % PageV01P2932 21(@)(@@) % وقد هتف الله في وحيه % % به لقريش أشد الهتاف % % 22(@)(@@) % أم اكتنفت أذنك العاذلا % % ت باللوم في ذاك كل اكتناف % % 23(@)(@@) % عليك السلام ولولا الإخاء % لجاءتك بعد قواف قوافي % % 24(@)(@@) % لقد ساءني أن تكون انهزم % % ت قبل الوقاف وقبل الثقاف % 25(@)(@@) % ولو كان غيرك ثم استحال % % للاقى ملامي كصخر القذاف % % 26(@)(@@) % وهل ينكر الحق أني امرؤ % من اعوج قومته بالثقاف % % 27(@)(@@) % كأني أراك وقد قلت جا % % ء يأخذ حنطتنا بالخراف % % 28(@)(@@) % موالينا أنصفوا أنصفوا % % فظلمكم ظاهر غير خافي % % 29(@)(@@) % سمحتم بضيعتكم للخسا % % ر يأكلها ناعل بعد حافي % % 30(@)(@@) % حمت من مواليكم خيرها % % ولكنها للأقاصي صوافي % % PageV01P2933 31(@)(@@) % وإني لأظلم في لومكم % % وإن كان فيكم ومنكم تجافي % % 32(@)(@@) % لأني أرى الناس قد خبلوا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms672# % % وأصبح زيهم من خلاف % 33(@)(@@) % فأقدامهم في قلنسيهم % % جنوبا وهامهم في الخفاف % % 34(@)(@@) % بني هاشم أين عن ضيفكم % % هشيم ثريدكم في الصحاف % % 35(@)(@@) % أماء سواقيكم في الخسو % % ف أم بذر حنطتكم في خساف % % 36(@)(@@) % ألم يبن هاشمكم مجدكم % % وعبا منافكم في النياف % 37(@)(@@) % عليك برأيك في حاجتي % % ففيه لعمري من الداء شافي % % 38(@)(@@) % ولا تأس من رجعتي إن محو % % ت سوء اقتراف بحسن اعتراف % 39(@)(@@) % ولا تعتذر غير ما معذر % % فليس لما بيننا من تلافي % % 40(@)(@@) % إلى أن يرد قناع المشي % % ب لي حالكا كجناح الغداف % PageV01P2934 البحر : - 1(@)(@@) % يا ابن أبي الجهم احتقب هذا اللطف % فإن فيه طرفا من الطرف % 2(@)(@@) % يا جثة التل ويا وجه الهدف % يا روثة الفيل ويا لحم الصدف % 3(@)(@@) % يا أجرة البيت قضاء وسلف % % يا ليلة الخان إذا الخان وكف % % 4(@)(@@) % يا غم آب عند سكان الغرف % % يا برد كانون لعار بالنجف % 5(@)(@@) % يا ثلج ماء مالح فيه جيف % يا خزف التنور يا شر الخزف % 6(@)(@@) % يا سوء كيل وغلاء وحشف % يا نوبة الفقر ويا سن الخرف % % 7(@)(@@) % يا طيرة الشؤم ويا فأل التلف % % يا سدة في المنخرين من نغف % 8(@)(@@) % من كان يشكو فرط حب وشغف % % فإن بي منك لبغضا وشنف % 9(@)(@@) % أدناهما مثل السقام والدنف % % بيتك بيت نطف كل النطف % % 10(@)(@@) % لا يلتقي فيه العفاف والشرف % % بل تلتقي فيه بظور وقلف % PageV01P2935 11(@)(@@) % كم طائرا أغفلته حتى جدف % أحسن ماهر به سوء العلف % % 12(@)(@@) % لا زلت من دهرك في شر كنف % يليك منه جنف بعد جنف % % 13(@)(@@) % مالك في بغضك إن مت خلف % % إلا بنيك الخلف من شر سلف % % PageV01P2936 البحر : - 1(@)(@@) % طاف الخيال وعن ذكراك ما طافا % % فكان أكرم طيف طارق ضافا % % 2(@)(@@) % طيف عراني فحياني وأتحفني % % بالنرجس الغض والتفاح إتحافا % % 3(@)(@@) % عينان جاورتا خدين ما خلقا % % 5(@)(@@) % % إلا شقاء يراه الغر إترافا % % 6(@)(@@) % وكم ألم فأهدت لي محاسنه % % من الفواكه والريحان أصنافا % % 7(@)(@@) % رمان عدن وأعنابا مهدلة % وأقحوانا يسقى الراح رفافا % % 8(@)(@@) % ويانعا من جنى العناب تتبعه % % قلب المودع تذكارا وتأسافا % % 9(@)(@@) % أسرى بأنواع ريحان وفاكهة % % يأبين قطفا وإن خيلن إقطافا % % 10(@)(@@) % لله ضيفك من ضيف قرى نزلا % من الغرور عميد القلب مكلافا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms673# % % 11(@)(@@) % قرى هو البرح إعقابا وإن وجدت % منه النفوس مذاق العيش إسلافا % % PageV01P2937 12(@)(@@) % أقر عيني في ليلى وصبحني % % وجدا أفاضهما بالماء شفافا % % 13(@)(@@) % لا خير في قرة للعين معقبة % دمعا يخدد في الخدين ذرافا % % 14(@)(@@) % أعجب بوجد مزور قاد زائره % بل لم تزل ذكر يجلبن أطيافا % % 15(@)(@@) % هب الضمير ونام الطرف فاجتلبت % ذكراك والنوم زورا طالما جافى % % 16(@)(@@) % صافيته فحباك النوم زورته % % وكان ذلك حق النبه لو صافى % % 17(@)(@@) % وافاك والليل قد ألقى مراسيه % % خيال من ليس بالوافي ولو وافى % % 18(@)(@@) % في شيعة كالنجوم الزهر معتمة % أحدقن بالبدر أشباها وألافا % % 19(@)(@@) % بيض كسين حليا لا كفاء لها % % حسنا فأكسفنها بالحسن إكسافا % % 20(@)(@@) % شبهن بالدر إذ ألبسن فاخره % بل كن درا وكان الدر أصدافا % % 21(@)(@@) % يا حسن ليل وإصباح جمعنهما % % والليل ملق على الآفاق أكنافا % % PageV01P2938 22(@)(@@) % غر تجللن أسدافا مرجلة % على وجوه وضاء جبن أسدافا % % 23(@)(@@) % ومسن في حلل الأفواف عاطرة % فخلتهن لبسن الروض أفوافا % % 24(@)(@@) % من كل مجدولة إن أقبلت عطفت % أعطافها من قلوب الناس أعطافا % % 25(@)(@@) % وإن تولت فريا الخلق تتبعها % % أرادفها من قلوب الناس أردافا % % 26(@)(@@) % لو أن لي عند من أحببته مقة % لصدق الحلم إلثاما وإرشافا % % 27(@)(@@) % لكن هيفاء تلقى الله صادية % إلى الدماء التي حرمن مهيافا % % 28(@)(@@) % تبا لحكم الغواني والمقربه % % فما رأى فيه راء قط إنصافا % % 29(@)(@@) % أسعفن بالملك عفوا فائتلين معا % أن لا يرى طالب منهم إسعافا % % 30(@)(@@) % يا سائلي بالغواني من صبابته % % سائل بهن فقد صادفت وصافا % % 31(@)(@@) % هن اللواتي إذلاقيتهن ضحى % لاقيت صدا وإشراقا وإخطافا % % PageV01P2939 32(@)(@@) % مثل السيوف إذا لاقيت مصلتها % % لاقيت حدا وإمهاء وإرهافا % % 33(@)(@@) % أرضيننا حسن قد زانه بشر % صاف وأسخطتنا مطلا وإخلافا % % 34(@)(@@) % بخلن عنا بما يسألن من وتح % % نزر وأجحفن بالألباب إجحافا % % 35(@)(@@) % وإنني للذي غادرنه عطلا % % بغير لب وإن أحسنت أوصافا % % 36(@)(@@) % أسقمن قلبي بألوان مصححة % وأعين أدنفت بالغنج إدنافا % % 37(@)(@@) % يا مكذبا لي في دعواي شككه % % أن فتر الدمع وبلا منه وكافا % % 38(@)(@@) % بواطن الحب أدهى من ظواهره % % كما علمت وشر الداء ما اجتافا % % 39(@)(@@) % ما للأحبة قد ضمن صبوتنا % % بعد الإنابة سكيتا وهتافا % % 40(@)(@@) % طورا حماما وطورا منزلا خرسا % ما لم ترجع به الأرواح زفزافا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms674# % % 41(@)(@@) % أو طارقا في حريم النوم يطرقنا % % أو بارقا لعزاء القلب خطافا % % PageV01P2940 42(@)(@@) % أو حنة من حنين النيب ما برحت % تهيج للصب أبراحا وأشعافا % % 43(@)(@@) % كل يجد لنا شجوا يذكرنا % % إلفا فيمنحنا الأحزان ألافا % % 44(@)(@@) % لا تعجبن لمرزوق أخي هوج % حظا تخطى أصيل الرأي طرافا % % 45(@)(@@) % فخالق الناس أعراء بلا وبر م طاف الخيال وعن ذكراك ما طافا % % فكان أكرم طيف طارق ضافا % % 46(@)(@@) % طيف عراني فحياني وأتحفني % % بالنرجس الغض والتفاح إتحافا % % 47(@)(@@) % عينان جاورتا خدين ما خلقا % % إلا شقاء يراه الغر إترافا % % 48(@)(@@) % وكم ألم فأهدت لي محاسنه % % من الفواكه والريحان أصنافا % % 49(@)(@@) % رمان عدن وأعنابا مهدلة % وأقحوانا يسقى الراح رفافا % % 50(@)(@@) % ويانعا من جنى العناب تتبعه % % قلب المودع تذكارا وتأسافا % % 51(@)(@@) % أسرى بأنواع ريحان وفاكهة % % يأبين قطفا وإن خيلن إقطافا % % PageV01P2941 52(@)(@@) % لله ضيفك من ضيف قرى نزلا % من الغرور عميد القلب مكلافا % % 53(@)(@@) % قرى هو البرح إعقابا وإن وجدت % منه النفوس مذاق العيش إسلافا % % 54(@)(@@) % أقر عيني في ليلى وصبحني % % وجدا أفاضهما بالماء شفافا % % 55(@)(@@) % لا خير في قرة للعين معقبة % دمعا يخدد في الخدين ذرافا % % 56(@)(@@) % أعجب بوجد مزور قاد زائره % بل لم تزل ذكر يجلبن أطيافا % % 57(@)(@@) % هب الضمير ونام الطرف فاجتلبت % ذكراك والنوم زورا طالما جافى % % 58(@)(@@) % صافيته فحباك النوم زورته % % وكان ذلك حق النبه لو صافى % % 59(@)(@@) % وافاك والليل قد ألقى مراسيه % % خيال من ليس بالوافي ولو وافى % % 60(@)(@@) % في شيعة كالنجوم الزهر معتمة % أحدقن بالبدر أشباها وألافا % % 61(@)(@@) % بيض كسين حليا لا كفاء لها % % حسنا فأكسفنها بالحسن إكسافا % % PageV01P2942 62(@)(@@) % شبهن بالدر إذ ألبسن فاخره % بل كن درا وكان الدر أصدافا % % 63(@)(@@) % يا حسن ليل وإصباح جمعنهما % % والليل ملق على الآفاق أكنافا % % 64(@)(@@) % غر تجللن أسدافا مرجلة % على وجوه وضاء جبن أسدافا % % 65(@)(@@) % ومسن في حلل الأفوف عاطرة % فخلتهن لبسن الروض أفوافا % % 66(@)(@@) % من كل مجدولة إن أقبلت عطفت % أعطافها من قلوب الناس أعطافا % % 67(@)(@@) % وإن تولت فريا الخلق تتبعها % % أرادفها من قلوب الناس أردافا % % 68(@)(@@) % لو أن لي عند من أحببته مقة % لصدق الحلم إلثاما وإرشافا % % 69(@)(@@) % لكن هيفاء تلقى الله صادية % إلى الدماء التي حرمن مهيافا % % 70(@)(@@) % تبا لحكم الغواني والمقربه % % فما 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms675# رأى فيه راء قط إنصافا % % 71(@)(@@) % أسعفن بالملك عفوا فائتلين معا % أن لا يرى طالب منهم إسعافا % % PageV01P2943 72(@)(@@) % يا سائلي بالغواني من صبابته % % سائل بهن فقد صادفت وصافا % % 73(@)(@@) % هن اللواتي إذلاقيتهن ضحى % لاقيت صدا وإشراقا وإخطافا % % 74(@)(@@) % مثل السيوف إذا لاقيت مصلتها % % لاقيت حدا وإمهاء وإرهافا % % 75(@)(@@) % أرضيننا حسن قد زانه بشر % صاف وأسخطتنا مطلا وإخلافا % % 76(@)(@@) % بخلن عنا بما يسألن من وتح % % نزر وأجحفن بالألباب إجحافا % % 77(@)(@@) % وإنني للذي غادرنه عطلا % % بغير لب وإن أحسنت أوصافا % % 78(@)(@@) % أسقمن قلبي بألوان مصححة % وأعين أدنفت بالغنج إدنافا % % 79(@)(@@) % يا مكذبا لي في دعواي شككه % % أن فتر الدمع وبلا منه وكافا % % 80(@)(@@) % بواطن الحب أدهى من ظواهره % % كما علمت وشر الداء ما اجتافا % % 81(@)(@@) % ما للأحبة قد ضمن صبوتنا % % بعد الإنابة سكيتا وهتافا % % PageV01P2944 82(@)(@@) % طورا حماما وطورا منزلا خرسا % ما لم ترجع به الأرواح زفزافا % % 83(@)(@@) % أو طارقا في حريم النوم يطرقنا % % أو بارقا لعزاء القلب خطافا % % 84(@)(@@) % أو حنة من حنين النيب ما برحت % تهيج للصب أبراحا وأشعافا % % 85(@)(@@) % كل يجد لنا شجوا يذكرنا % % إلفا فيمنحنا الأحزان ألافا % % 86(@)(@@) % لا تعجبن لمرزوق أخي هوج % حظا تخطى أصيل الرأي طرافا % % 87(@)(@@) % فخالق الناس أعراء بلا وبر ه % % كاسي البهائم أوبارا وأصوافا % % 88(@)(@@) % مازلت أعرف أهل العجز في دعة % لا يكلفون وأهل الكيس كلافا % % 89(@)(@@) % أما ترى هذه الأنعام قد كفيت % % فما تساوم بالأخفاف خفافا % % 90(@)(@@) % يكفي أخا العجز ما يقضي القدير به % % من لا ترى منه عند الحكم إجنافا % % 91(@)(@@) % وكلب خصب زهاه الحظ قلت له % % لا تستوي والأسود السود غضافا % % PageV01P2945 92(@)(@@) % أطغاك جهل بما أعطتك مرحمة % قدما أطالت على الحراص رفرافا % % 93(@)(@@) % دع من قوافيك ما يكفيك إن لها % % في مدح أحمد إعناقا وإيجافا % % 94(@)(@@) % فامدح به الشعر مدحا تستفيد به % % وفرا وتكبت حسادا وشنافا % % 95(@)(@@) % أضحى أبو جعفر الطائي منتجعا % ومستجارا لمن رجى ومن خافا % % 96(@)(@@) % قرم إياس وأوس من عشيرته % % وحاتم كرم السلاف سلافا % % 97(@)(@@) % تقدموا وعلوا قدما وشم بهم % % روح الحياة فكان القوم أنافا % % 98(@)(@@) % كانوا مراعي للأرباع ممرعة % في كل حين وللمرتاع أكهافا % % 99(@)(@@) % سلاف صدق فلا زال المليك لهم % % بمثل أحمد في الخلاف خلافا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms676# % % 100(@)(@@) % أغر أبلج ما ينفك معتقلا % للحمد مبتذلا للمال متلافا % % 101(@)(@@) % مسهلا سبل الجدوى لطالبها % % لعرضه ولدين الله ظلافا % % PageV01P2946 102(@)(@@) % أزمانه بنداه الغمر أشتية % وإن غدت بجناه الحلو أصيافا % % 103(@)(@@) % كأنه والعفاة الطائفين به % % بنية الله والحجاج طوافا % % 104(@)(@@) % أفردته برجائي وانفردت به % % وظل قوم على الأوثان عكافا % % 105(@)(@@) % يدعون من لا يجيب الهاتفين به % % وإن أملوه تدعاء وتهتافا % % 106(@)(@@) % ألفيت من خالص الياقوت جوهره % % لما وجدت صنوف الناس أخزافا % % 107(@)(@@) % يضحي إذا خزي المداح مادحه % % كذائف المسك لا يخزيه ما ذافا % % 108(@)(@@) % كم حالبين ضروع العيش درته % % يمرون منهن ضرات وأخلافا % % 109(@)(@@) % لولا أبو جعفر الطائي ما منحوا % % إلا قرونا من الدنيا وأظلافا % % 110(@)(@@) % سهل الخليقة لم يشرك سياسته % % عنف وإن كان بالملحاح معنافا % % 111(@)(@@) % إذا المصاعيب لم تركب تجللها % % قسرا فأعطت مع الإركاب إردافا % % PageV01P2947 112(@)(@@) % ما نعرف الوعد والإيعاد من رجل % سواه إلا أمانيا وإرجافا % % 113(@)(@@) % منابذ لأعاديه وثروته % % فليس يألوهما ما اسطاع إتلافا % % 114(@)(@@) % ممن يرى المنع إسرافا وحق له % % أليس ما يتلف الأعراض إسرافا % % 115(@)(@@) % إذا لوى القوم يوما دين مادحهم % % أعطى عطاياه قبل المدح إسلافا % % 116(@)(@@) % إلى ذراه أنيخت بعد متعبة % أنضاء ركب أملوا الأرض تطوافا % % 117(@)(@@) % ثم استثيرت فثارت وهي مثقلة % وقد أتته تباري الريح أحفافا % % 118(@)(@@) % أمسى أبا منزل والجود خادمه % % والأرض دارا له والناس أضيافا % % 119(@)(@@) % أولى المضيفين بالدفء الملوذ به % % مشتى وأجدرهم بالظل مصطافا % % 120(@)(@@) % يرعي العفاة رياض العرف مؤتنفا % بهم ويرعى رياض الحمد مئنافا % % 121(@)(@@) % أضحت سياسته رصفا ونائله % نثرا فأنطق نثارا ورصافا % % PageV01P2948 122(@)(@@) % سما فحلق منه أجدل لحم % لما أسفت بغاث الطير إسفافا % % 123(@)(@@) % من العتاق يجلي قشعما دربا % حتى إذا ما استبان انقض غطرافا % % 124(@)(@@) % ما زال فاروق ما التفت شواكله % وللجيوش بشرواهن لفافا % % 125(@)(@@) % لم تستمع قط ذكراه ولم تره % % إلا تواضعت واسوضعت إشرافا % % 126(@)(@@) % ألقى إليه أمين الله حربته % % فصادفت منه لقف الكف لقافا % % 127(@)(@@) % مظفرا هز عطفيها مظفرة % إذا تلقت صدورا صرن أكتافا % % 128(@)(@@) % منصورة في يد منصورة أبدا % من محرب لم يزل في الروع دلافا % % 129(@)(@@) % يغشي القناة قناة الظهر معتمدا % على القناتين قصاما وقصافا % % 130(@)(@@) % مصمما غير وقاف وآونة % تلقاه عند حدود الله وقافا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms677# % % 131(@)(@@) % ما انفك يقتل مراقا ويأسرهم % % أمضى من الحين أرماحا وأسيافا % % PageV01P2949 132(@)(@@) % حتى غدا الطرف الأقصى به وسطا % من بعد ما كانت الأوساط أطرافا % % 133(@)(@@) % أجلى السباع وأخلى كل مسبعة % فغادر الأرض أحراما وأخيافا % % 134(@)(@@) % ثم استهل على الدنيا بنائله % % حتى غدت فلوات الأرض أريافا % % 135(@)(@@) % لا يوهن الله بطشا منه تعرفه % مزلزلا بأعادي الله خسافا % % 136(@)(@@) % ولا يغض ماء كف منه ممطرة % تساجل المزن تهطالا وتوكافا % % 137(@)(@@) % إذا رمى أحمد الطائي طائفة % أضحت مقاتلها للنبل أهدافا % % 138(@)(@@) % وإن سقى أرض أخرى صوب راحته % % هزت جنانا من النعماء ألفافا % % 139(@)(@@) % ظهير صدق إذا آخية ضعفت % % وزادها ظهراء السوء إضعافا % % 140(@)(@@) % عم التدابير إلطافا يرد به % % على الأواخي إثخانا وإكثافا % 141(@)(@@) % راخى خناق بني اللأواء كلهم % % وشد آساس ملك كن أجرافا % % PageV01P2950 142(@)(@@) % أخو عطايا إذا ماشاء بدلها % % ضربا يخذف بالأوصال خذرافا % % 143(@)(@@) % وراء بيض أياديه إذا غمطت % بيض يطيح بها بيضا وأقحافا % 144(@)(@@) % إن سالم استنزل الأرزاق واسعة % % أو حارب اتخذ المقدار سيافا % % 145(@)(@@) % سائل صديقا عن الطائي هل ذهبت % دماء قتلاه أو جرحاه أطلافا % % 146(@)(@@) % ألم تر القتل أقوى طائعين له % % عقوبة لم يقارف فيه أحيافا % % 147(@)(@@) % يدا خؤونا ورجلا منه أقسمتا % % تستعملان طوال الدهر إسكافا % % 148(@)(@@) % وإن يكن كان أردى مفلحا عرضا % فقد تصيب سهام الدهر خطرافا % % 149(@)(@@) % وقد يميل على من كان مال له % % ويعقب البؤس من غذاة سرهافا % % 150(@)(@@) % أردى كليبا لجساس وكان له % % ربا وأعدى على بسطام شرخافا % % 151(@)(@@) % واسأل به فارسا إذ سار تطلبه % % سيرا حثيثا يغول الأرض خشافا % % PageV01P2951 152(@)(@@) % في فيلق بات في الظلماء كوكبها % % يهدي وأصبح للأبصار طرافا % % 153(@)(@@) % ففوز اللص حتى قاد من معه % % وكل مال إذا ضيعته سافا % % 154(@)(@@) % من بعد ما كلبوا جوعا فكلهم % % أضحى ظليما بشري الدو نقافا % % 155(@)(@@) % جاروا عن القصد فاستنهاهم حكم % عدل وما جار في حكم ولا حافا % % 156(@)(@@) % وانحاز عن بدد منهم وما ادكرت % خيل الأمير أواريا وأعلافا % % 157(@)(@@) % لكي تطارد كي يغتر مارقة % أخرى إذا ما دهاها كر عطافا % % 158(@)(@@) % وللهنات لقاح ليس يعرفه % % عير وإن كان للأبوال كرافا % % 159(@)(@@) % تحت الأمور أمور لو تبينها % % عير الفلاةلأضحى العير خضافا % % 160(@)(@@) % ما كان دهر قصير 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms678# جدع معطسه % % لما أطف له موساه إطفافا % % 161(@)(@@) % لكن أراد به أمرا فأدركه % % ولم يردد على مافات إلهافا % % PageV01P2952 162(@)(@@) % فلينتظر فارس أوراد عائدة % لا يستطيع لها الزواد كفكافا % % 163(@)(@@) % وأين يهرب من خيل تخال بها % % عقبان مبردة يطلبن إلجافا % % 164(@)(@@) % دوخن شيبان أما في رؤوسهم % تدوي الطبيب إذا أغشاه مجرافا % % 165(@)(@@) % وقلن ذوقوا جناكم إن جانيكم % ما زال للحنظل الخطبان نقافا % % 166(@)(@@) % كم جاهل كان بالطائي جربه % % صلا إذا طلب الأعداء زحافا % % 167(@)(@@) % يحرم الغسل إيلاء ويطلقه % % برا فيوخفه بالثأر إيخافا % % 168(@)(@@) % ووقعة منه في الأعراب قد جعلت % أوطانهم إسوة الأحقاف أحقافا % % 169(@)(@@) % تحالفوا مذ تحداهم فخلتهم % % على الهزائم لا الإقدام أحلافا % % 170(@)(@@) % ظلوا قتيلا ومصفودا وذا هرب % تقضي بإدراكه الطير التي اعتافا % % 171(@)(@@) % أسير قتل وإن أضحى طليق يد % قد أزهقت نفسه الآجال إزهافا % % PageV01P2953 172(@)(@@) % ومن سرت نقم الطائي تطلبه % % ألفى الذي وعدته الفوت مخلافا % % 173(@)(@@) % يا هاربا منه إن الليل غاشية % لا بد منها وإن أوشكت إحصافا % % 174(@)(@@) % كيف النجاء لناج من أخي طلب % مثل الظلام إذا ما عم أغدافا % % 175(@)(@@) % كأنما كل نفس حين يطلبها % % قد أعلقت سببا منه وخطافا % % 176(@)(@@) % فاطلب رضاه وأيقن أن سخطته % % لا حرز منها إذا طوفانها طافا % % 177(@)(@@) % تلق ابن حرين لا تلقاه مجترما % فظا على مستميح العفو حلافا % % 178(@)(@@) % بل سيدا قرنت بالحلم حفظته % % فلم تفز قط إلا كان ميقافا % % 179(@)(@@) % يهم بالطول همام به عجلا % وإن أراد عقابا كف كفافا % % 180(@)(@@) % يسوس نفسا على الأغياظ صابرة % مص طاف الخيال وعن ذكراك ما طافا % % 181(@)(@@) % فكان أكرم طيف طارق ضافا % % طيف عراني فحياني وأتحفني % % PageV01P2954 182(@)(@@) % بالنرجس الغض والتفاح إتحافا % % عينان جاورتا خدين ما خلقا % % 183(@)(@@) % إلا شقاء يراه الغر إترافا % % وكم ألم فأهدت لي محاسنه % % 184(@)(@@) % من الفواكه والريحان أصنافا % % رمان عدن وأعنابا مهدلة % 185(@)(@@) % وأقحوانا يسقى الراح رفافا % % ويانعا من جنى العناب تتبعه % % 186(@)(@@) % قلب المودع تذكارا وتأسافا % % أسرى بأنواع ريحان وفاكهة % % 187(@)(@@) % يأبين قطفا وإن خيلن إقطافا % % لله ضيفك من ضيف قرى نزلا % 188(@)(@@) % من الغرور عميد القلب مكلافا % % قرى هو البرح إعقابا وإن وجدت % 189(@)(@@) % منه النفوس مذاق العيش إسلافا % % أقر عيني في ليلى وصبحني % % 190(@)(@@) % وجدا أفاضهما 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms679# بالماء شفافا % % لا خير في قرة للعين معقبة % 191(@)(@@) % دمعا يخدد في الخدين ذرافا % % أعجب بوجد مزور قاد زائره % PageV01P2955 192(@)(@@) % بل لم تزل ذكر يجلبن أطيافا % % هب الضمير ونام الطرف فاجتلبت % 193(@)(@@) % ذكراك والنوم زورا طالما جافى % % صافيته فحباك النوم زورته % % 194(@)(@@) % وكان ذلك حق النبه لو صافى % % وافاك والليل قد ألقى مراسيه % % 195(@)(@@) % خيال من ليس بالوافي ولو وافى % % في شيعة كالنجوم الزهر معتمة % 196(@)(@@) % أحدقن بالبدر أشباها وألافا % % بيض كسين حليا لا كفاء لها % % 197(@)(@@) % حسنا فأكسفنها بالحسن إكسافا % % شبهن بالدر إذ ألبسن فاخره % 198(@)(@@) % بل كن درا وكان الدر أصدافا % % يا حسن ليل وإصباح جمعنهما % % 199(@)(@@) % والليل ملق على الآفاق أكنافا % % غر تجللن أسدافا مرجلة % 200(@)(@@) % على وجوه وضاء جبن أسدافا % % ومسن في حلل الأفوف عاطرة % 201(@)(@@) % فخلتهن لبسن الروض أفوافا % % من كل مجدولة إن أقبلت عطفت % PageV01P2956 202(@)(@@) % أعطافها من قلوب الناس أعطافا % % وإن تولت فريا الخلق تتبعها % % 203(@)(@@) % أرادفها من قلوب الناس أردافا % % لو أن لي عند من أحببته مقة % 204(@)(@@) % لصدق الحلم إلثاما وإرشافا % % لكن هيفاء تلقى الله صادية % 205(@)(@@) % إلى الدماء التي حرمن مهيافا % % تبا لحكم الغواني والمقربه % % 206(@)(@@) % فما رأى فيه راء قط إنصافا % % أسعفن بالملك عفوا فائتلين معا % 207(@)(@@) % أن لا يرى طالب منهم إسعافا % % يا سائلي بالغواني من صبابته % % 208(@)(@@) % سائل بهن فقد صادفت وصافا % % هن اللواتي إذلاقيتهن ضحى % 209(@)(@@) % لاقيت صدا وإشراقا وإخطافا % % مثل السيوف إذا لاقيت مصلتها % % 210(@)(@@) % لاقيت حدا وإمهاء وإرهافا % % أرضيننا حسن قد زانه بشر % 211(@)(@@) % صاف وأسخطتنا مطلا وإخلافا % % بخلن عنا بما يسألن من وتح % % PageV01P2957 212(@)(@@) % نزر وأجحفن بالألباب إجحافا % % وإنني للذي غادرنه عطلا % % 213(@)(@@) % بغير لب وإن أحسنت أوصافا % % أسقمن قلبي بألوان مصححة % 214(@)(@@) % وأعين أدنفت بالغنج إدنافا % % يا مكذبا لي في دعواي شككه % % 215(@)(@@) % أن فتر الدمع وبلا منه وكافا % % بواطن الحب أدهى من ظواهره % % 216(@)(@@) % كما علمت وشر الداء ما اجتافا % % ما للأحبة قد ضمن صبوتنا % % 217(@)(@@) % بعد الإنابة سكيتا وهتافا % % طورا حماما وطورا منزلا خرسا % 218(@)(@@) % ما لم ترجع به الأرواح زفزافا % % أو طارقا في حريم النوم يطرقنا % % 219(@)(@@) % أو بارقا لعزاء القلب خطافا % % أو حنة من حنين النيب ما برحت 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms680# % 220(@)(@@) % تهيج للصب أبراحا وأشعافا % % كل يجد لنا شجوا يذكرنا % % 221(@)(@@) % إلفا فيمنحنا الأحزان ألافا % % لا تعجبن لمرزوق أخي هوج % PageV01P2958 222(@)(@@) % حظا تخطى أصيل الرأي طرافا % % فخالق الناس أعراء بلا وبر % 223(@)(@@) % كاسي البهائم أوبارا وأصوافا % % مازلت أعرف أهل العجز في دعة % 224(@)(@@) % لا يكلفون وأهل الكيس كلافا % % أما ترى هذه الأنعام قد كفيت % % 225(@)(@@) % فما تساوم بالأخفاف خفافا % % يكفي أخا العجز ما يقضي القدير به % % 226(@)(@@) % من لا ترى منه عند الحكم إجنافا % % وكلب خصب زهاه الحظ قلت له % % 227(@)(@@) % لا تستوي والأسود السود غضافا % % أطغاك جهل بما أعطتك مرحمة % 228(@)(@@) % قدما أطالت على الحراص رفرافا % % دع من قوافيك ما يكفيك إن لها % % 229(@)(@@) % في مدح أحمد إعناقا وإيجافا % % فامدح به الشعر مدحا تستفيد به % % 230(@)(@@) % وفرا وتكبت حسادا وشنافا % % أضحى أبو جعفر الطائي منتجعا % 231(@)(@@) % ومستجارا لمن رجى ومن خافا % % قرم إياس وأوس من عشيرته % % PageV01P2959 232(@)(@@) % وحاتم كرم السلاف سلافا % % تقدموا وعلوا قدما وشم بهم % % 233(@)(@@) % روح الحياة فكان القوم أنافا % % كانوا مراعي للأرباع ممرعة % 234(@)(@@) % في كل حين وللمرتاع أكهافا % % سلاف صدق فلا زال المليك لهم % % 235(@)(@@) % بمثل أحمد في الخلاف خلافا % % أغر أبلج ما ينفك معتقلا % 236(@)(@@) % للحمد مبتذلا للمال متلافا % % مسهلا سبل الجدوى لطالبها % % 237(@)(@@) % لعرضه ولدين الله ظلافا % % أزمانه بنداه الغمر أشتية % 238(@)(@@) % وإن غدت بجناه الحلو أصيافا % % كأنه والعفاة الطائفين به % % 239(@)(@@) % بنية الله والحجاج طوافا % % أفردته برجائي وانفردت به % % 240(@)(@@) % وظل قوم على الأوثان عكافا % % يدعون من لا يجيب الهاتفين به % % 241(@)(@@) % وإن أملوه تدعاء وتهتافا % % ألفيت من خالص الياقوت جوهره % % PageV01P2960 242(@)(@@) % لما وجدت صنوف الناس أخزافا % % يضحي إذا خزي المداح مادحه % % 243(@)(@@) % كذائف المسك لا يخزيه ما ذافا % % كم حالبين ضروع العيش درته % % 244(@)(@@) % يمرون منهن ضرات وأخلافا % % لولا أبو جعفر الطائي ما منحوا % % 245(@)(@@) % إلا قرونا من الدنيا وأظلافا % % سهل الخليقة لم يشرك سياسته % % 246(@)(@@) % عنف وإن كان بالملحاح معنافا % % إذا المصاعيب لم تركب تجللها % % 247(@)(@@) % قسرا فأعطت مع الإركاب إردافا % % ما نعرف الوعد والإيعاد من رجل % 248(@)(@@) % سواه إلا أمانيا وإرجافا % % منابذ لأعاديه وثروته % % 249(@)(@@) % فليس يألوهما ما اسطاع إتلافا % % ممن يرى المنع إسرافا وحق له % % 250(@)(@@) % أليس ما يتلف 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms681# الأعراض إسرافا % % إذا لوى القوم يوما دين مادحهم % % 251(@)(@@) % أعطى عطاياه قبل المدح إسلافا % % إلى ذراه أنيخت بعد متعبة % PageV01P2961 252(@)(@@) % أنضاء ركب أملوا الأرض تطوافا % % ثم استثيرت فثارت وهي مثقلة % 253(@)(@@) % وقد أتته تباري الريح أحفافا % % أمسى أبا منزل والجود خادمه % % 254(@)(@@) % والأرض دارا له والناس أضيافا % % أولى المضيفين بالدفء الملوذ به % % 255(@)(@@) % مشتى وأجدرهم بالظل مصطافا % % يرعي العفاة رياض العرف مؤتنفا % 256(@)(@@) % بهم ويرعى رياض الحمد مئنافا % % أضحت سياسته رصفا ونائله % 257(@)(@@) % نثرا فأنطق نثارا ورصافا % % سما فحلق منه أجدل لحم % 258(@)(@@) % لما أسفت بغاث الطير إسفافا % % من العتاق يجلي قشعما دربا % 259(@)(@@) % حتى إذا ما استبان انقض غطرافا % % ما زال فاروق ما التفت شواكله % 260(@)(@@) % وللجيوش بشرواهن لفافا % % لم تستمع قط ذكراه ولم تره % % 261(@)(@@) % إلا تواضعت واسوضعت إشرافا % % ألقى إليه أمين الله حربته % % PageV01P2962 262(@)(@@) % فصادفت منه لقف الكف لقافا % % مظفرا هز عطفيها مظفرة % 263(@)(@@) % إذا تلقت صدورا صرن أكتافا % % منصورة في يد منصورة أبدا % 264(@)(@@) % من محرب لم يزل في الروع دلافا % % يغشي القناة قناة الظهر معتمدا % 265(@)(@@) % على القناتين قصاما وقصافا % % مصمما غير وقاف وآونة % 266(@)(@@) % تلقاه عند حدود الله وقافا % % ما انفك يقتل مراقا ويأسرهم % % 267(@)(@@) % أمضى من الحين أرماحا وأسيافا % % حتى غدا الطرف الأقصى به وسطا % 268(@)(@@) % من بعد ما كانت الأوساط أطرافا % % أجلى السباع وأخلى كل مسبعة % 269(@)(@@) % فغادر الأرض أحراما وأخيافا % % ثم استهل على الدنيا بنائله % % 270(@)(@@) % حتى غدت فلوات الأرض أريافا % % لا يوهن الله بطشا منه تعرفه % 271(@)(@@) % مزلزلا بأعادي الله خسافا % % ولا يغض ماء كف منه ممطرة % PageV01P2963 272(@)(@@) % تساجل المزن تهطالا وتوكافا % % إذا رمى أحمد الطائي طائفة % 273(@)(@@) % أضحت مقاتلها للنبل أهدافا % % وإن سقى أرض أخرى صوب راحته % % 274(@)(@@) % هزت جنانا من النعماء ألفافا % % ظهير صدق إذا آخية ضعفت % % 275(@)(@@) % وزادها ظهراء السوء إضعافا % % عم التدابير إلطافا يرد به % % 276(@)(@@) % على الأواخي إثخانا وإكثافا % راخى خناق بني اللأواء كلهم % % 277(@)(@@) % وشد آساس ملك كن أجرافا % % أخو عطايا إذا ماشاء بدلها % % 278(@)(@@) % ضربا يخذف بالأوصال خذرافا % % وراء بيض أياديه إذا غمطت % 279(@)(@@) % بيض يطيح بها بيضا وأقحافا % إن سالم استنزل الأرزاق واسعة % % 280(@)(@@) % أو حارب اتخذ المقدار سيافا % % سائل صديقا عن 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms682# الطائي هل ذهبت % 281(@)(@@) % دماء قتلاه أو جرحاه أطلافا % % ألم تر القتل أقوى طائعين له % % PageV01P2964 282(@)(@@) % عقوبة لم يقارف فيه أحيافا % % يدا خؤونا ورجلا منه أقسمتا % % 283(@)(@@) % تستعملان طوال الدهر إسكافا % % وإن يكن كان أردى مفلحا عرضا % 284(@)(@@) % فقد تصيب سهام الدهر خطرافا % % وقد يميل على من كان مال له % % 285(@)(@@) % ويعقب البؤس من غذاة سرهافا % % أردى كليبا لجساس وكان له % % 286(@)(@@) % ربا وأعدى على بسطام شرخافا % % واسأل به فارسا إذ سار تطلبه % % 287(@)(@@) % سيرا حثيثا يغول الأرض خشافا % % في فيلق بات في الظلماء كوكبها % % 288(@)(@@) % يهدي وأصبح للأبصار طرافا % % ففوز اللص حتى قاد من معه % % 289(@)(@@) % وكل مال إذا ضيعته سافا % % من بعد ما كلبوا جوعا فكلهم % % 290(@)(@@) % أضحى ظليما بشري الدو نقافا % % جاروا عن القصد فاستنهاهم حكم % 291(@)(@@) % عدل وما جار في حكم ولا حافا % % وانحاز عن بدد منهم وما ادكرت % PageV01P2965 292(@)(@@) % خيل الأمير أواريا وأعلافا % % لكي تطارد كي يغتر مارقة % 293(@)(@@) % أخرى إذا ما دهاها كر عطافا % % وللهنات لقاح ليس يعرفه % % 294(@)(@@) % عير وإن كان للأبوال كرافا % % تحت الأمور أمور لو تبينها % % 295(@)(@@) % عير الفلاةلأضحى العير خضافا % % ما كان دهر قصير جدع معطسه % % 296(@)(@@) % لما أطف له موساه إطفافا % % لكن أراد به أمرا فأدركه % % 297(@)(@@) % ولم يردد على مافات إلهافا % % فلينتظر فارس أوراد عائدة % 298(@)(@@) % لا يستطيع لها الزواد كفكافا % % وأين يهرب من خيل تخال بها % % 299(@)(@@) % عقبان مبردة يطلبن إلجافا % % دوخن شيبان أما في رؤوسهم % 300(@)(@@) % تدوي الطبيب إذا أغشاه مجرافا % % وقلن ذوقوا جناكم إن جانيكم % 301(@)(@@) % ما زال للحنظل الخطبان نقافا % % كم جاهل كان بالطائي جربه % % PageV01P2966 302(@)(@@) % صلا إذا طلب الأعداء زحافا % % يحرم الغسل إيلاء ويطلقه % % 303(@)(@@) % برا فيوخفه بالثأر إيخافا % % ووقعة منه في الأعراب قد جعلت % 304(@)(@@) % أوطانهم إسوة الأحقاف أحقافا % % تحالفوا مذ تحداهم فخلتهم % % 305(@)(@@) % على الهزائم لا الإقدام أحلافا % % ظلوا قتيلا ومصفودا وذا هرب % 306(@)(@@) % تقضي بإدراكه الطير التي اعتافا % % أسير قتل وإن أضحى طليق يد % 307(@)(@@) % قد أزهقت نفسه الآجال إزهافا % % ومن سرت نقم الطائي تطلبه % % 308(@)(@@) % ألفى الذي وعدته الفوت مخلافا % % يا هاربا منه إن الليل غاشية % 309(@)(@@) % لا بد منها وإن أوشكت إحصافا % % كيف النجاء لناج من أخي 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms683# طلب % 310(@)(@@) % مثل الظلام إذا ما عم أغدافا % % كأنما كل نفس حين يطلبها % % 311(@)(@@) % قد أعلقت سببا منه وخطافا % % فاطلب رضاه وأيقن أن سخطته % % PageV01P2967 312(@)(@@) % لا حرز منها إذا طوفانها طافا % % تلق ابن حرين لا تلقاه مجترما % 313(@)(@@) % فظا على مستميح العفو حلافا % % بل سيدا قرنت بالحلم حفظته % % 314(@)(@@) % فلم تفز قط إلا كان ميقافا % % يهم بالطول همام به عجلا % 315(@)(@@) % وإن أراد عقابا كف كفافا % % يسوس نفسا على الأغياظ صابرة % 316(@)(@@) % ما زال يؤلفها الكروه إيلافا % % مغفل حين يستعفى وتحسبه % % 317(@)(@@) % عند انتقاد وجوه الناس صرافا % % تلقاه للعيب ستارا وإن دمست % 318(@)(@@) % ظلماء لاقيته للغيب كشافا % إذا ارتأى تبعت آثاره سددا % 319(@)(@@) % لا كالذي يتبع الآثار مقتافا % % ما إن يزال له رأي يصيب به % % 320(@)(@@) % لو أنه حيوان كان عرافا % % تخاله باتقاء الذنب متقيا % 321(@)(@@) % في يوم هيجاء مرداة وقذافا % % يخشى الملام ويغشى الحرب مرتديا % PageV01P2968 322(@)(@@) % فيها رداء من الكتاب هفهافا % % لم يلفه الغمز خوارا وتعطفه % % 323(@)(@@) % بالرفق منك فتلقى منه عطافا % % يلين للريح إن هزته لينة % 324(@)(@@) % ولا يلين إذا هزته معصافا % % لا يترك الحق مغبونا لسائمه % % 325(@)(@@) % خسفا ولا يتعدى الحق حيافا % % كم قد أعد لقوم حسن مقدرة % 326(@)(@@) % وكم يعدون أكفافا وأجدافا % % قراهم الصفح إذ حلوا بعقوته % % 327(@)(@@) % وأتبع الصفح إكراما وإلطافا % لم يعد أن أرعف الأقلام يرفدهم % % 328(@)(@@) % ولو عتوا رعف الخرصان إرعافا % % جاءوا يخافون نارا لا خمود لها % % 329(@)(@@) % فأزلفت لهم الجنات إزلافا % % لكن تطارد كي يغتر مارقة % 330(@)(@@) % أخرى إذا ما دهاها كر عطافا % % ورائد قال ألفينا خلائقه % % 331(@)(@@) % كالشهد طعما ومثل المسك مستافا % % خلائق علمتنا كيف نمدحه % % PageV01P2969 332(@)(@@) % ورققتنا وكنا قبل أجلافا % % كم قد بدأنا وعاودنا فأوسعنا % % 333(@)(@@) % بذلا ولم نستطع للبحر إنزافا % % بحر من العرف لا تلقى الظماء به % % 334(@)(@@) % محلئين ولا الوراد عيافا % % تمت معانيه منه في امرىء نصف % 335(@)(@@) % زوال أطال على الأحوال توقافا % % قد سن شفرتيه البأس بغيته % % 336(@)(@@) % وشاف من صحفتيه الجود ما شافا % % كذا الأهلة تستوفي محاسنها % % 337(@)(@@) % إذا نضت ما شهور الحول أنصافا % % ممن يرى كل ما يفنى بمنزلة % 338(@)(@@) % سيان ما التذ منها والذي عافا % % لا بالمروع إذا أهوالها عظمت % 339(@)(@@) % ولا المروق إذا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms684# زيافها زافا % % تبلو به محنة الدنيا وفتنتها % % 340(@)(@@) % طودا كهمك إرساء وإشرافا % % لا يستخف لدى ريح تهب له % % 341(@)(@@) % ولا عليه ولا تلقاه رجافا % % يجن قلبا وقورا في جوانحه % % PageV01P2970 342(@)(@@) % مستنفرا عند ذكر الله وجافا % % لا عيب فيه سوى عتق يرد به % % 343(@)(@@) % عتق الجواد إذا جاراه إقرافان طاف الخيال وعن ذكراك ما طافا % % فكان أكرم طيف طارق ضافا % % 344(@)(@@) % طيف عراني فحياني وأتحفني % % بالنرجس الغض والتفاح إتحافا % % 345(@)(@@) % عينان جاورتا خدين ما خلقا % % إلا شقاء يراه الغر إترافا % % 346(@)(@@) % وكم ألم فأهدت لي محاسنه % % من الفواكه والريحان أصنافا % % 347(@)(@@) % رمان عدن وأعنابا مهدلة % وأقحوانا يسقى الراح رفافا % % 348(@)(@@) % ويانعا من جنى العناب تتبعه % % قلب المودع تذكارا وتأسافا % % 349(@)(@@) % أسرى بأنواع ريحان وفاكهة % % يأبين قطفا وإن خيلن إقطافا % % 350(@)(@@) % لله ضيفك من ضيف قرى نزلا % من الغرور عميد القلب مكلافا % % 351(@)(@@) % قرى هو البرح إعقابا وإن وجدت % منه النفوس مذاق العيش إسلافا % % PageV01P2971 352(@)(@@) % أقر عيني في ليلى وصبحني % % وجدا أفاضهما بالماء شفافا % % 353(@)(@@) % لا خير في قرة للعين معقبة % دمعا يخدد في الخدين ذرافا % % 354(@)(@@) % أعجب بوجد مزور قاد زائره % بل لم تزل ذكر يجلبن أطيافا % % 355(@)(@@) % هب الضمير ونام الطرف فاجتلبت % ذكراك والنوم زورا طالما جافى % % 356(@)(@@) % صافيته فحباك النوم زورته % % وكان ذلك حق النبه لو صافى % % 357(@)(@@) % وافاك والليل قد ألقى مراسيه % % خيال من ليس بالوافي ولو وافى % % 358(@)(@@) % في شيعة كالنجوم الزهر معتمة % أحدقن بالبدر أشباها وألافا % % 359(@)(@@) % بيض كسين حليا لا كفاء لها % % حسنا فأكسفنها بالحسن إكسافا % % 360(@)(@@) % شبهن بالدر إذ ألبسن فاخره % بل كن درا وكان الدر أصدافا % % 361(@)(@@) % يا حسن ليل وإصباح جمعنهما % % والليل ملق على الآفاق أكنافا % % PageV01P2972 362(@)(@@) % غر تجللن أسدافا مرجلة % على وجوه وضاء جبن أسدافا % % 363(@)(@@) % ومسن في حلل الأفوف عاطرة % فخلتهن لبسن الروض أفوافا % % 364(@)(@@) % من كل مجدولة إن أقبلت عطفت % أعطافها من قلوب الناس أعطافا % % 365(@)(@@) % وإن تولت فريا الخلق تتبعها % % أرادفها من قلوب الناس أردافا % % 366(@)(@@) % لو أن لي عند من أحببته مقة % لصدق الحلم إلثاما وإرشافا % % 367(@)(@@) % لكن هيفاء تلقى الله صادية % إلى الدماء التي حرمن مهيافا % % 368(@)(@@) % تبا لحكم الغواني والمقربه % % فما رأى فيه راء 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms685# قط إنصافا % % 369(@)(@@) % أسعفن بالملك عفوا فائتلين معا % أن لا يرى طالب منهم إسعافا % % 370(@)(@@) % يا سائلي بالغواني من صبابته % % سائل بهن فقد صادفت وصافا % % 371(@)(@@) % هن اللواتي إذلاقيتهن ضحى % لاقيت صدا وإشراقا وإخطافا % % PageV01P2973 372(@)(@@) % مثل السيوف إذا لاقيت مصلتها % % لاقيت حدا وإمهاء وإرهافا % % 373(@)(@@) % أرضيننا حسن قد زانه بشر % صاف وأسخطتنا مطلا وإخلافا % % 374(@)(@@) % بخلن عنا بما يسألن من وتح % % نزر وأجحفن بالألباب إجحافا % % 375(@)(@@) % وإنني للذي غادرنه عطلا % % بغير لب وإن أحسنت أوصافا % % 376(@)(@@) % أسقمن قلبي بألوان مصححة % وأعين أدنفت بالغنج إدنافا % % 377(@)(@@) % يا مكذبا لي في دعواي شككه % % أن فتر الدمع وبلا منه وكافا % % 378(@)(@@) % بواطن الحب أدهى من ظواهره % % كما علمت وشر الداء ما اجتافا % % 379(@)(@@) % ما للأحبة قد ضمن صبوتنا % % بعد الإنابة سكيتا وهتافا % % 380(@)(@@) % طورا حماما وطورا منزلا خرسا % ما لم ترجع به الأرواح زفزافا % % 381(@)(@@) % أو طارقا في حريم النوم يطرقنا % % أو بارقا لعزاء القلب خطافا % % PageV01P2974 382(@)(@@) % أو حنة من حنين النيب ما برحت % تهيج للصب أبراحا وأشعافا % % 383(@)(@@) % كل يجد لنا شجوا يذكرنا % % إلفا فيمنحنا الأحزان ألافا % % 384(@)(@@) % لا تعجبن لمرزوق أخي هوج % حظا تخطى أصيل الرأي طرافا % % 385(@)(@@) % فخالق الناس أعراء بلا وبر % كاسي البهائم أوبارا وأصوافا % % 386(@)(@@) % مازلت أعرف أهل العجز في دعة % لا يكلفون وأهل الكيس كلافا % % 387(@)(@@) % أما ترى هذه الأنعام قد كفيت % % فما تساوم بالأخفاف خفافا % % 388(@)(@@) % يكفي أخا العجز ما يقضي القدير به % % من لا ترى منه عند الحكم إجنافا % % 389(@)(@@) % وكلب خصب زهاه الحظ قلت له % % لا تستوي والأسود السود غضافا % % 390(@)(@@) % أطغاك جهل بما أعطتك مرحمة % قدما أطالت على الحراص رفرافا % % 391(@)(@@) % دع من قوافيك ما يكفيك إن لها % % في مدح أحمد إعناقا وإيجافا % % PageV01P2975 392(@)(@@) % فامدح به الشعر مدحا تستفيد به % % وفرا وتكبت حسادا وشنافا % % 393(@)(@@) % أضحى أبو جعفر الطائي منتجعا % ومستجارا لمن رجى ومن خافا % % 394(@)(@@) % قرم إياس وأوس من عشيرته % % وحاتم كرم السلاف سلافا % % 395(@)(@@) % تقدموا وعلوا قدما وشم بهم % % روح الحياة فكان القوم أنافا % % 396(@)(@@) % كانوا مراعي للأرباع ممرعة % في كل حين وللمرتاع أكهافا % % 397(@)(@@) % سلاف صدق فلا زال المليك لهم % % بمثل أحمد في الخلاف خلافا % % 398(@)(@@) % أغر أبلج ما ينفك 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms686# معتقلا % للحمد مبتذلا للمال متلافا % % 399(@)(@@) % مسهلا سبل الجدوى لطالبها % % لعرضه ولدين الله ظلافا % % 400(@)(@@) % أزمانه بنداه الغمر أشتية % وإن غدت بجناه الحلو أصيافا % % 401(@)(@@) % كأنه والعفاة الطائفين به % % بنية الله والحجاج طوافا % % PageV01P2976 402(@)(@@) % أفردته برجائي وانفردت به % % وظل قوم على الأوثان عكافا % % 403(@)(@@) % يدعون من لا يجيب الهاتفين به % % وإن أملوه تدعاء وتهتافا % % 404(@)(@@) % ألفيت من خالص الياقوت جوهره % % لما وجدت صنوف الناس أخزافا % % 405(@)(@@) % يضحي إذا خزي المداح مادحه % % كذائف المسك لا يخزيه ما ذافا % % 406(@)(@@) % كم حالبين ضروع العيش درته % % يمرون منهن ضرات وأخلافا % % 407(@)(@@) % لولا أبو جعفر الطائي ما منحوا % % إلا قرونا من الدنيا وأظلافا % % 408(@)(@@) % سهل الخليقة لم يشرك سياسته % % عنف وإن كان بالملحاح معنافا % % 409(@)(@@) % إذا المصاعيب لم تركب تجللها % % قسرا فأعطت مع الإركاب إردافا % % 410(@)(@@) % ما نعرف الوعد والإيعاد من رجل % سواه إلا أمانيا وإرجافا % % 411(@)(@@) % منابذ لأعاديه وثروته % % فليس يألوهما ما اسطاع إتلافا % % PageV01P2977 412(@)(@@) % ممن يرى المنع إسرافا وحق له % % أليس ما يتلف الأعراض إسرافا % % 413(@)(@@) % إذا لوى القوم يوما دين مادحهم % % أعطى عطاياه قبل المدح إسلافا % % 414(@)(@@) % إلى ذراه أنيخت بعد متعبة % أنضاء ركب أملوا الأرض تطوافا % % 415(@)(@@) % ثم استثيرت فثارت وهي مثقلة % وقد أتته تباري الريح أحفافا % % 416(@)(@@) % أمسى أبا منزل والجود خادمه % % والأرض دارا له والناس أضيافا % % 417(@)(@@) % أولى المضيفين بالدفء الملوذ به % % مشتى وأجدرهم بالظل مصطافا % % 418(@)(@@) % يرعي العفاة رياض العرف مؤتنفا % بهم ويرعى رياض الحمد مئنافا % % 419(@)(@@) % أضحت سياسته رصفا ونائله % نثرا فأنطق نثارا ورصافا % % 420(@)(@@) % سما فحلق منه أجدل لحم % لما أسفت بغاث الطير إسفافا % % 421(@)(@@) % من العتاق يجلي قشعما دربا % حتى إذا ما استبان انقض غطرافا % % PageV01P2978 422(@)(@@) % ما زال فاروق ما التفت شواكله % وللجيوش بشرواهن لفافا % % 423(@)(@@) % لم تستمع قط ذكراه ولم تره % % إلا تواضعت واسوضعت إشرافا % % 424(@)(@@) % ألقى إليه أمين الله حربته % % فصادفت منه لقف الكف لقافا % % 425(@)(@@) % مظفرا هز عطفيها مظفرة % إذا تلقت صدورا صرن أكتافا % % 426(@)(@@) % منصورة في يد منصورة أبدا % من محرب لم يزل في الروع دلافا % % 427(@)(@@) % يغشي القناة قناة الظهر معتمدا % على القناتين قصاما وقصافا % % 428(@)(@@) % مصمما غير وقاف وآونة % تلقاه عند حدود الله وقافا % % 429(@)(@@) % ما انفك يقتل مراقا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms687# ويأسرهم % % أمضى من الحين أرماحا وأسيافا % % 430(@)(@@) % حتى غدا الطرف الأقصى به وسطا % من بعد ما كانت الأوساط أطرافا % % 431(@)(@@) % أجلى السباع وأخلى كل مسبعة % فغادر الأرض أحراما وأخيافا % % PageV01P2979 432(@)(@@) % ثم استهل على الدنيا بنائله % % حتى غدت فلوات الأرض أريافا % % 433(@)(@@) % لا يوهن الله بطشا منه تعرفه % مزلزلا بأعادي الله خسافا % % 434(@)(@@) % ولا يغض ماء كف منه ممطرة % تساجل المزن تهطالا وتوكافا % % 435(@)(@@) % إذا رمى أحمد الطائي طائفة % أضحت مقاتلها للنبل أهدافا % % 436(@)(@@) % وإن سقى أرض أخرى صوب راحته % % هزت جنانا من النعماء ألفافا % % 437(@)(@@) % ظهير صدق إذا آخية ضعفت % % وزادها ظهراء السوء إضعافا % % 438(@)(@@) % عم التدابير إلطافا يرد به % % على الأواخي إثخانا وإكثافا % 439(@)(@@) % راخى خناق بني اللأواء كلهم % % وشد آساس ملك كن أجرافا % % 440(@)(@@) % أخو عطايا إذا ماشاء بدلها % % ضربا يخذف بالأوصال خذرافا % % 441(@)(@@) % وراء بيض أياديه إذا غمطت % بيض يطيح بها بيضا وأقحافا % PageV01P2980 442(@)(@@) % إن سالم استنزل الأرزاق واسعة % % أو حارب اتخذ المقدار سيافا % % 443(@)(@@) % سائل صديقا عن الطائي هل ذهبت % دماء قتلاه أو جرحاه أطلافا % % 444(@)(@@) % ألم تر القتل أقوى طائعين له % % عقوبة لم يقارف فيه أحيافا % % 445(@)(@@) % يدا خؤونا ورجلا منه أقسمتا % % تستعملان طوال الدهر إسكافا % % 446(@)(@@) % وإن يكن كان أردى مفلحا عرضا % فقد تصيب سهام الدهر خطرافا % % 447(@)(@@) % وقد يميل على من كان مال له % % ويعقب البؤس من غذاة سرهافا % % 448(@)(@@) % أردى كليبا لجساس وكان له % % ربا وأعدى على بسطام شرخافا % % 449(@)(@@) % واسأل به فارسا إذ سار تطلبه % % سيرا حثيثا يغول الأرض خشافا % % 450(@)(@@) % في فيلق بات في الظلماء كوكبها % % يهدي وأصبح للأبصار طرافا % % 451(@)(@@) % ففوز اللص حتى قاد من معه % % وكل مال إذا ضيعته سافا % % PageV01P2981 452(@)(@@) % من بعد ما كلبوا جوعا فكلهم % % أضحى ظليما بشري الدو نقافا % % 453(@)(@@) % جاروا عن القصد فاستنهاهم حكم % عدل وما جار في حكم ولا حافا % % 454(@)(@@) % وانحاز عن بدد منهم وما ادكرت % خيل الأمير أواريا وأعلافا % % 455(@)(@@) % لكي تطارد كي يغتر مارقة % أخرى إذا ما دهاها كر عطافا % % 456(@)(@@) % وللهنات لقاح ليس يعرفه % % عير وإن كان للأبوال كرافا % % 457(@)(@@) % تحت الأمور أمور لو تبينها % % عير الفلاةلأضحى العير خضافا % % 458(@)(@@) % ما كان دهر قصير جدع معطسه % % لما أطف 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms688# له موساه إطفافا % % 459(@)(@@) % لكن أراد به أمرا فأدركه % % ولم يردد على مافات إلهافا % % 460(@)(@@) % فلينتظر فارس أوراد عائدة % لا يستطيع لها الزواد كفكافا % % 461(@)(@@) % وأين يهرب من خيل تخال بها % % عقبان مبردة يطلبن إلجافا % % PageV01P2982 462(@)(@@) % دوخن شيبان أما في رؤوسهم % تدوي الطبيب إذا أغشاه مجرافا % % 463(@)(@@) % وقلن ذوقوا جناكم إن جانيكم % ما زال للحنظل الخطبان نقافا % % 464(@)(@@) % كم جاهل كان بالطائي جربه % % صلا إذا طلب الأعداء زحافا % % 465(@)(@@) % يحرم الغسل إيلاء ويطلقه % % برا فيوخفه بالثأر إيخافا % % 466(@)(@@) % ووقعة منه في الأعراب قد جعلت % أوطانهم إسوة الأحقاف أحقافا % % 467(@)(@@) % تحالفوا مذ تحداهم فخلتهم % % على الهزائم لا الإقدام أحلافا % % 468(@)(@@) % ظلوا قتيلا ومصفودا وذا هرب % تقضي بإدراكه الطير التي اعتافا % % 469(@)(@@) % أسير قتل وإن أضحى طليق يد % قد أزهقت نفسه الآجال إزهافا % % 470(@)(@@) % ومن سرت نقم الطائي تطلبه % % ألفى الذي وعدته الفوت مخلافا % % 471(@)(@@) % يا هاربا منه إن الليل غاشية % لا بد منها وإن أوشكت إحصافا % % PageV01P2983 472(@)(@@) % كيف النجاء لناج من أخي طلب % مثل الظلام إذا ما عم أغدافا % % 473(@)(@@) % كأنما كل نفس حين يطلبها % % قد أعلقت سببا منه وخطافا % % 474(@)(@@) % فاطلب رضاه وأيقن أن سخطته % % لا حرز منها إذا طوفانها طافا % % 475(@)(@@) % تلق ابن حرين لا تلقاه مجترما % فظا على مستميح العفو حلافا % % 476(@)(@@) % بل سيدا قرنت بالحلم حفظته % % فلم تفز قط إلا كان ميقافا % % 477(@)(@@) % يهم بالطول همام به عجلا % وإن أراد عقابا كف كفافا % % 478(@)(@@) % يسوس نفسا على الأغياظ صابرة % ه ما زال يؤلفها الكروه إيلافا % % 479(@)(@@) % مغفل حين يستعفى وتحسبه % % عند انتقاد وجوه الناس صرافا % % 480(@)(@@) % تلقاه للعيب ستارا وإن دمست % ظلماء لاقيته للغيب كشافا % 481(@)(@@) % إذا ارتأى تبعت آثاره سددا % لا كالذي يتبع الآثار مقتافا % % PageV01P2984 482(@)(@@) % ما إن يزال له رأي يصيب به % % لو أنه حيوان كان عرافا % % 483(@)(@@) % تخاله باتقاء الذنب متقيا % في يوم هيجاء مرداة وقذافا % % 484(@)(@@) % يخشى الملام ويغشى الحرب مرتديا % فيها رداء من الكتاب هفهافا % % 485(@)(@@) % لم يلفه الغمز خوارا وتعطفه % % بالرفق منك فتلقى منه عطافا % % 486(@)(@@) % يلين للريح إن هزته لينة % ولا يلين إذا هزته معصافا % % 487(@)(@@) % لا يترك الحق مغبونا لسائمه % % خسفا ولا يتعدى الحق حيافا % % 488(@)(@@) % كم قد أعد 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms689# لقوم حسن مقدرة % وكم يعدون أكفافا وأجدافا % % 489(@)(@@) % قراهم الصفح إذ حلوا بعقوته % % وأتبع الصفح إكراما وإلطافا % 490(@)(@@) % لم يعد أن أرعف الأقلام يرفدهم % % ولو عتوا رعف الخرصان إرعافا % % 491(@)(@@) % جاءوا يخافون نارا لا خمود لها % % فأزلفت لهم الجنات إزلافا % % PageV01P2985 492(@)(@@) % لكن تطارد كي يغتر مارقة % أخرى إذا ما دهاها كر عطافا % % 493(@)(@@) % ورائد قال ألفينا خلائقه % % كالشهد طعما ومثل المسك مستافا % % 494(@)(@@) % خلائق علمتنا كيف نمدحه % % ورققتنا وكنا قبل أجلافا % % 495(@)(@@) % كم قد بدأنا وعاودنا فأوسعنا % % بذلا ولم نستطع للبحر إنزافا % % 496(@)(@@) % بحر من العرف لا تلقى الظماء به % % محلئين ولا الوراد عيافا % % 497(@)(@@) % تمت معانيه منه في امرىء نصف % زوال أطال على الأحوال توقافا % % 498(@)(@@) % قد سن شفرتيه البأس بغيته % % وشاف من صحفتيه الجود ما شافا % % 499(@)(@@) % كذا الأهلة تستوفي محاسنها % % إذا نضت ما شهور الحول أنصافا % % 500(@)(@@) % ممن يرى كل ما يفنى بمنزلة % سيان ما التذ منها والذي عافا % % 501(@)(@@) % لا بالمروع إذا أهوالها عظمت % ولا المروق إذا زيافها زافا % % PageV01P2986 502(@)(@@) % تبلو به محنة الدنيا وفتنتها % % طودا كهمك إرساء وإشرافا % % 503(@)(@@) % لا يستخف لدى ريح تهب له % % ولا عليه ولا تلقاه رجافا % % 504(@)(@@) % يجن قلبا وقورا في جوانحه % % مستنفرا عند ذكر الله وجافا % % 505(@)(@@) % لا عيب فيه سوى عتق يرد به % % عتق الجواد إذا جاراه إقرافا % % 506(@)(@@) % كم رام ذو الجد والأجداد غايته % فقام ذو الجد والأجداد زحافا % % 507(@)(@@) % يا ذا العلاء الذي أرسى قواعده % % على الحضيض وجاز النجم أعرافا % % 508(@)(@@) % أما وقدرك إن الله عظمه % % لقد غدا فوق ما خولت أضعافا % % 509(@)(@@) % وما رمتك يد بالحظ خاطئة % كلا لعمري وما أعطتك إسرافا % % 510(@)(@@) % وما أرى الناس أمرا أنت صاحبه % ظهرا تبدل بالإسراج إيكافا % % 511(@)(@@) % فاسلم على الدهر في نعماء سابغة % حتى يمسيك العصران إدلافا % % PageV01P2987 512(@)(@@) % من كان أصبح ظلاما لسوقته % % من الملوك فقد أصبحت منصافا % % 513(@)(@@) % لا تترك الدهر مغرورا بغرته % % ولا ترى للصحيح الجلد قرافا % % 514(@)(@@) % ما كابد الأسر عان في يدي زمن % % إلا رجا بك فاء واصلت كافا % % 515(@)(@@) % ولا وأى عنك حسن الظن موعده % إلا غدت وهي حاء واصلت قافا % % 516(@)(@@) % وعائب لك بالإسراف قلت له % % لا زلت عن حسن الأفعال 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms690# صدافا % % 517(@)(@@) % أصبحت في رفضك الإسراف محتقبا % أجر امرىء آف منه النجل ما آفا % % 518(@)(@@) % عوضت من وزر مجد أجر منقصة % بلوى من الله فاترك ذكر من عافى % % 519(@)(@@) % ماذا تعيب لحاك الله من ملك % لم يرض قط من المعروف سفسافا % % 520(@)(@@) % أنال حتى أعف الملحفين معا % بنائل سد أفواها وأجوافا % % 521(@)(@@) % إن كان أثبت بالإسراف سيئة % فقد محاها بأن لم يبق إلحافا % % PageV01P2988 522(@)(@@) % أهلا بمعصية باءت بمعصية % وعمت الناس إغناء وإعفافا % 523(@)(@@) % وهائب لك لم يسألك قلت له % % دع عنك عجزك لا يعقبك تلهافا % % 524(@)(@@) % سل الأمير ولا تحرمك هيبته % % فقد غدا لجبال المال نسافا % % 525(@)(@@) % سله وإن عز واستعلت مراتبه % % وكان حدا على الأعداء جلافا % % 526(@)(@@) % لا يؤيسنك غدق من جرامته % % وإن سما واستحد الشوك والتافا % % 527(@)(@@) % فليس تمنع مما فيه منعته % إلا إذا خرق الخراف خرافا % % 528(@)(@@) % إليك رادفت عزمي فوق ناجية % كالريح تعصف بالركبان إعصافا % % 529(@)(@@) % أرسى عليك قتود الرحل أن خلقت % % أخف ما دب فوق الأرض إخفافا % % 530(@)(@@) % تقلب الليل عينا غير نائمة % ومنسما بحصى المعزاء خذافا % % 531(@)(@@) % سفينة من سفين البر محكمة % تجري إذا ما اتخذت السوط مجدافا % % PageV01P2989 532(@)(@@) % جاءت بعساف أهوال على ثقة % أن سوف تلقاك للأموال عسافا % % 533(@)(@@) % أهدى إليك هديا من كرائمه % % يحفها حشد الآمال زفافا % % 534(@)(@@) % حسناء معجبة للناس مطربة % لا تستعين على الإطراب عزافا % % 535(@)(@@) % من سيدات القوافي ما يزال لها % % راو تظل به السادات حفافا % % 536(@)(@@) % ملي من الحمد والتحميد حاملة % ألطاف حر يرجي منك ألطافا % % 537(@)(@@) % أهدى غرائب يرجو أن تحوز له % % غربا يرويه من جدواك غرافا % % 538(@)(@@) % أذال فيها لك النفس التي لقيت % % من العفاف وطول الظلف إقشافا % % 539(@)(@@) % فحاكها والذي يبغي كفايته % % وإن شتا غيره في الريف أوصافا % % 540(@)(@@) % حوك امريء لم يكن من قبل مكتسبا % بالشعر سألة للناس ملحافا % % 541(@)(@@) % كخصف آدم من أوراق جنته % % ولم يكن قبل ذاك الخصف خصافا % % PageV01P2990 542(@)(@@) % كساك من زينة الدنيا لتكسوه % % من سترها فاكسه ياخير من كافا % % 543(@)(@@) % وافعل به غير مأمور بعارفة % فعلا يزف نعام الشكر إزفافا % % 544(@)(@@) % أطرفه بالجود في دهر غدا عطلا % من كل عرف فلم يعدمك إطرافا % % 545(@)(@@) % من كان أغضبه قولي وآسفه 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms691# % فزاده الله إغضابا وإيسافا % 546(@)(@@) % وليحذر الشاعر العريض بادرتي % % فربما صادق العريض حذافا % % 547(@)(@@) % لا يجهلن حليم إنني رجل % من كان أخطل جهل كنت جحافا % % PageV01P2991 البحر : - 1(@)(@@) % رحم الله صالح بن وصيف % فلقد كان جد شهم ظريف % % 2(@)(@@) % كان لا يصطفي المخنث خدنا % بل يراه مثل الكنيف المجيف % % 3(@)(@@) % معشر قربهم من الناس عر % لصحيح وقذرة لنظيف % % 4(@)(@@) % فادحروا عنكم المخانيث دخرا % وليوكل بذاك كل شريف % % PageV01P2992 البحر : - 1(@)(@@) % أبى لأخي الدنيا التبتل أنها % % لها زيفة في كل حين تزيفها % % 2(@)(@@) % إذا ما جلاها في الرياض ربيعها % % يروق عيون الناظرين رفيفها % % 3(@)(@@) % وأخرى إذا ما أينعت ثمراتها % % ورقت حواشيها وطاب خريفها % % 4(@)(@@) % تراءى لنا في زخرفين كليهما % % إذا استوجف الأهواء خف وجيفها % % PageV01P2993 البحر : - 1(@)(@@) % الدين والعلم والنعماء والشرف % تأبى لجارك أن يمنى له التلف % 2(@)(@@) % مؤيدات من الأركان أربعة % يأوي إليهن محروم ومضطعف % 3(@)(@@) % أبا علي وأنت المرء ليس لنا % % جار سواه إذا خفنا ولا كنف % 4(@)(@@) % أشكو إليك ظلامات يتابعها % % من ليس يحسن منه الظلم والجنف % 5(@)(@@) % مؤملي والذي أشجي الخطوب به % % أضحى وأمسى وأدنى ظلمه سرف % 6(@)(@@) % أظلني سوء رأي منه متصل % وليس لي من بلاء سيء سلف % 7(@)(@@) % إلا مدائح ما تنفك سائرة % لركبها كل يوم نية قذف % 8(@)(@@) % وخدمة سبقت أيام دولته % % ما مثلها زلفة إن عدت الزلف % % 9(@)(@@) % يممته إذ وجوه الناس كلهم % فيها إلى الجانب المعمور منصرف % 10(@)(@@) % مازلت ممتطيا تلقاءه قدمي % % لا يطبيني عنه السعي والحرف % PageV01P2994 11(@)(@@) % أهدي له الأنس في أيام وحشته % % وعندي الصبر والتأميل والظلف % 12(@)(@@) % لا أجتديه ولا أمتاح نائله % % ولا أزول ولي في الأرض مصطرف % 13(@)(@@) % حتى إذا فتح الله الفتوح له % % أصبحت لولا استتاري كدت أختطف % 14(@)(@@) % ظلما توحدني منه بلا سبب % % وليس لي منه أن حاكمت منتصف % 15(@)(@@) % تظاهرت غمم سود وليس لها % % إلا بوجهك بعد الله منكشف % 16(@)(@@) % ولم تزل يا ابن بدر بدر مضحية % يبدو فينجاب للساري به السدف % 17(@)(@@) % فداو حالي بما فيه مصحتها % % فإن حالي حال داؤها الدنف % 18(@)(@@) % كلم رئيسي كلاما في تعطفه % % إن الكرام إذا ما استعطفوا عطفوا % % 19(@)(@@) % وليس دهري إلا أن يتاركني % % بحيث لا جفوة منه ولا لطف % 20(@)(@@) % لا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms692# رغبة عن مطيف بالمطيف به % % لكن نفسي شموس حين تعتنف % PageV01P2995 21(@)(@@) % وإنني لبصير العين ثاقبها % % أن لا نظير له في الناس يؤتنف % 22(@)(@@) % لكنه عم تجويدا وتوفية % وخصني منه سوء الكيل والحشف % 23(@)(@@) % وإنني للضنين القبضتين به % % وللضنين بقدري حين أعتسف % 24(@)(@@) % وإن تركي حظا من صحابته % % لحاجة قرنت في النفس والأسف % 25(@)(@@) % ممن لحاني بظهر الغيب قلت له % % لا تشغلنك عن أعمالك الكلف % 26(@)(@@) % مولاي لا عوض منه ولا خلف % والقدر لا عوض منه ولا خلف % 27(@)(@@) % ها إنها خطبة قام الخطيب بها % % بكر ولكنها في حزمها نصف % 28(@)(@@) % وقد قصدتك كالصادي أليح له % % في مهمه ماء مزن صانه رصف % 29(@)(@@) % فليس لي يا ابن بدر عنك منصرف % ولا بودي وشكري عنك منحرف % 30(@)(@@) % وكيف لي بخلاف فيك أركبه % وليس في فضلك المشهور مختلف % PageV01P2996 31(@)(@@) % فاحشد لغائر قدر إن حشدت له % % نما وزاد وإلا فهو منتسف % 32(@)(@@) % يامن إذا ماأناخ المستضام به % % أضحى يقاتل عنه العز والأنف % 33(@)(@@) % يامن إذا اهتضم القدر استقاد له % % فلم يبت وهو مطلول ولا طلف % 34(@)(@@) % ما عفر شابة في أعلى معاقله % % ولا عقاب شرورى ضمها لجف % 35(@)(@@) % يوما بأمنع مني يوم تمنعني % % كلا ولا قسور في أذنه غضف % 36(@)(@@) % دوني الدروع إذا ماكنت لي وزرا % والبيض والبيض والخطي والحجف % % 37(@)(@@) % فإنني لعزيز يوم تنصرني % % وفيك عند اعتداء الدهر منتصف % 38(@)(@@) % يا أبعد الناس غورا حين نسبره % % وأقرب الناس غورا حين يغترف % 39(@)(@@) % أصبحت بحر غناء غير منتزف % لاقاه بحر ثناء ليس ينتزف % 40(@)(@@) % فالفظ بدر نثير ما له صدف % ألفظ بدر نظيم ما له صدف % PageV01P2997 41(@)(@@) % كن لي كما كنت للراجين كلهم % لازال قصرك بالراجين يكتنف % 42(@)(@@) % قل للكرام بني وهب معاقلنا % % قولا يقربه طوعا ويعترف % 43(@)(@@) % العادلين موازينا إذا حكموا % % والراجحين إذا ما شالت الكفف % 44(@)(@@) % يا آل وهب أدام الله دولتكم % % لقد رعيتم فلا خوف ولا عجف % 45(@)(@@) % حتى غدوتم لآمال الورى قبلا % لها عليها طوال الدهر معتكف % 46(@)(@@) % فما لعبدكم المسكين بينكم % كأنه لمرامي دهره هدف % 47(@)(@@) % وأنتم النخلة الطولى التي بسقت % قدما وبورك منها الأصل والطرف % 48(@)(@@) % ولم تزل لي آمال مسلفة % وفيكم الآن للخراف مخترف % 49(@)(@@) % فإن 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms693# زوى عني الجمار طلعته % % فلا يصبني بحدي شوكه السعف % 50(@)(@@) % أمري وأمركم باز على علم % مرمق بعيون الناس مشترف % PageV01P2998 51(@)(@@) % فالله الله في أحدوثة حسنت % لا تهدموها بظلم إنها الشرف % PageV01P2999 البحر : - 1(@)(@@) % زلقت في سلاحها % % بالبطبطين شنطف % 2(@)(@@) % ثم قفت بضرطة % لم يعقها توقف % 3(@)(@@) % ضرطة تسكت الرعو % % د وفيها تقصف % 4(@)(@@) % ثم قامت مدلة % تتشاجى فتعنف % 5(@)(@@) % قيل قومي إلى الصرا % % ة فهذا تكلف % 6(@)(@@) % ما مع الحالة التي % % أنت فيها تظرف % 7(@)(@@) % ما التشاجي بطيب % منك والسلح ينطف % 8(@)(@@) % فمضت تقصد الصرا % % ة وفيها تكسف % 9(@)(@@) % ولأذيالها على % % قدميها تلفف % 10(@)(@@) % وتداعت لها الأكف % ف وفيها تعجرف % PageV01P3000 11(@)(@@) % أخذ الصفع رأسها % % وهي تعدو وتقطف % 12(@)(@@) % فانقضى ذلك التشا % % جي وزال التصلف % % 13(@)(@@) % قردة تدعي الغنا % % ء وفيها تخلف % 14(@)(@@) % قحبة تركب الأ % % ر وفيها تعسف % 15(@)(@@) % ليس في أنفس الكرا % % م إليها تشوف % 16(@)(@@) % ذات طيز بظوره % أبد الدهر تنقف % 17(@)(@@) % يبلغ الفيل والبعي % % ر وفيه تلهف % % 18(@)(@@) % كعصا صاحب العصا % % جل ذاك التلقف % % 19(@)(@@) % تطعم الأير تينة % قد علاها التحشف % 20(@)(@@) % طالبتني بأن أني % % ك وعندي تعفف % PageV01P3001 21(@)(@@) % قلت هيهات أو يحل % % ل لأير التكفف % % 22(@)(@@) % حرم النيك أو يطي % % ب مبال وينظف % 23(@)(@@) % ومن الفائت الذي % % ما عليه تأسف % 24(@)(@@) % نيك سوداء كالدجى % % حين يدجو ويكثف % 25(@)(@@) % حليها الشيب لا أكا % % ليل تحلو وتطرف % 26(@)(@@) % فعلى الوجه كرفس % % وعلى الرأس كرسف % 27(@)(@@) % منظر لا يروق عي % % نا وإن كان يطرف % 28(@)(@@) % كان للحسن يوسف % وهي للقبح يوسف % 29(@)(@@) % يضع الشتم قبحها % % وهي بالشتم تشرف % 30(@)(@@) % تجحد الله ربها % % وعلى الأير تعكف % PageV01P3002 31(@)(@@) % مسح شيراز عينها % % شغلها والتنغف % 32(@)(@@) % وغدة لم يزل لها % % بالمخازي تشرف % 33(@)(@@) % لو غدت وهي كعبة % ما استحل التطوف % 34(@)(@@) % همها الدهر مدمج % لحفافيه أحرف % 35(@)(@@) % هرمت فهي في قيو % % د من الكبر ترسف % 36(@)(@@) % يا أبا القاسم الذي % % في ذراه التضيف % 37(@)(@@) % والذي لم يزل له % % في المعالي تصرف % 38(@)(@@) % والذي لم يزل يجل % ل ومعناه يلطف % 39(@)(@@) % قد شتونا فكم نصي % ف طال التصيف % 40(@)(@@) % فاكفنا برد قردة % % تتشاجى فتسخف % % PageV01P3003 البحر : - 1(@)(@@) % بنفسي أمير أنصف الناس كلهم % % سواي فإني لست في ذاك أنصف % 2(@)(@@) % أتى المطل والتسويف دون ثوابه % % وعهدي به قبل المديح يسلف % 3(@)(@@) % أؤمل 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms694# في النيروز ربعي جوده % % وخرفيه في المهرجان فأخلف % 4(@)(@@) % وما خلت أني أستريث سماءه % % ويربع غيري من جناها ويخرف % PageV01P3004 البحر : - 1(@)(@@) % إذا تطاولت فاذكر % % أن الرياح ستعصف % 2(@)(@@) % وأن كل طويل % هبت له متقصف % 3(@)(@@) % فالدهر إن جرت يوما % يديل منك وينصف % % PageV01P3005 البحر : - 1(@)(@@) % أيها الماجد الذي بهر المد % داح مجدا وجاوز الأوصافا % % 2(@)(@@) % لا عدمت الفلاح ياجامع البر % ر مسيرا ومنتوى وانصرافا % % 3(@)(@@) % طفت بالبيت ثم أبت من الحج % ج فأصبحت للعفاة مطافا % % 4(@)(@@) % زرت بغداد زورة الغيث أغفى % % بالقرى وهو زائر فأضافا % % 5(@)(@@) % وكفت بالندى يداك على النا % % س وما زلت عارضا وكافا % % 6(@)(@@) % فتعدوا على الزمان بعدوا % % ك وكانوا لا يأملون انتصافا % % 7(@)(@@) % قلت لما رأيت ملتمسي % % عرفك عرفا إليك بل أعرافا % % 8(@)(@@) % نصر الله سيدا أصبح الناس % % س على صلب ماله أحلافا % % 9(@)(@@) % ولعمري لقد نصرت بأن % % عوضت حمدا وجنة ألفافا % % 10(@)(@@) % ولئن أتلفت يميناك عرضا % لبعرض وقيته الإتلافا % % PageV01P3006 11(@)(@@) % ودعاني يا ابن الملوك إلى فض % لك فضل بذلته إسرافا % % 12(@)(@@) % فأعذني من أن أرى بين ظني % % ويقيني في ما رجوت اختلافا % % 13(@)(@@) % أو أرى المجد قاعدا لي عن % % كفك وعدا مثمرا إخلافا % % 14(@)(@@) % وأنلني يا من رأيت سؤالي % % ه سواء في نيله والعفافا % % 15(@)(@@) % لا يكن حسرة نداك على النف % % س فأقنى الغنى وأرضى الكفافا % % 16(@)(@@) % وكفاني بها وعيدا لواع % % صان حوض المعروف عن أن يعافا % % 17(@)(@@) % يعتدي سيدا مرجى مخوفا % فإذا أسخط المرجين خافا % % 18(@)(@@) % ليست الإمرة التي تتولى % % بالهوينا فلا تسسها جزافا % % 19(@)(@@) % إنما إمرة الجواد على الأح % % رار فاعدل وأعمل الإنصافا % % 20(@)(@@) % لا تدع معشرا سمانا يكظو % % ن سمانا وآخرين عجافا % % PageV01P3007 21(@)(@@) % أعقب المجدبين من أهل خصب % % قد رعوا روضك المريع ائتنافا % % 22(@)(@@) % وأدل معطشيك من أهل ري % شربوا العرف من يديك سلافا % % 23(@)(@@) % أو تطول على الجميع فقد أو % % تيت عند اكتنافهم أكنافا % % 24(@)(@@) % أنت نعم المضيف والناس أضيا % % فك فاعمم ببرك الأضيافا % % 25(@)(@@) % فحرام عليك تبدية الأذ % ناب حتى تقدم الأعرافا % % 26(@)(@@) % ومن الجور والعنود عن الحق % ق وبعض الأحكام تجري اعتسافا % % 27(@)(@@) % شاعر سلف الثناء وأكدى % % وابن صمت يسلف الأسلافا % % 28(@)(@@) % لا يخيبن ناظم لك سمطا % بات يفري عن دره الأصدافا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms695# % % 29(@)(@@) % صن مديحي ومطلبي عن أناس % لم أزل عن لقائهم صدافا % % 30(@)(@@) % جعلوا قبلة الرجاء وصدوا % بجدواهم فبدلوا أهدافا % % PageV01P3008 31(@)(@@) % معشر ينكرون معرفة العر % ف ويأبى هناك إلا اعترافا % % 32(@)(@@) % فليعظك امرؤ غدا في يديه % % حسب مبتلى ومال معافى % % 33(@)(@@) % صاف دون الأموال عرضك واعلم % % أنه دون بذلها لن يصافى % % 34(@)(@@) % لا وعيدا أقول ذاك ولكن % % قلت حاء من المقال وقافا % % 35(@)(@@) % أن أهل القريض طورا يرقو % % ن وطورا تراهم أجلافا % % 36(@)(@@) % وإذا أسخطوا رأوا ذم سابو % % ر ولو كان ينزع الأكتافا % % 37(@)(@@) % هم إذا شئت نحل شهد % وإن شئت أفاع رقش تمج الزعافا % % 38(@)(@@) % لا يكونن ما سمعناه من جو % % دك في كل محفل أرجافا % % PageV01P3009 البحر : - 1(@)(@@) % شهدت بعض المخاني % % ث والطريف طريف % 2(@)(@@) % فقام من جنب عمرو % وللشقي حفيف % 3(@)(@@) % فقلت أنى ولم قم % ت خائفا يا سخيف % 4(@)(@@) % فقال لا تلحيني % % فأنف عمرو مخيف % 5(@)(@@) % فقلت صحف مخيفا % فأنف عمرو مجيف % 6(@)(@@) % بل أنف عمر و وفوه % بالوعة وكنيف % % 7(@)(@@) % فقال رأي قوي % رآه شيخ ضعيف % 8(@)(@@) % إن كان عمرو رأى مث % % له فعمرو حنيف % PageV01P3010 البحر : - 1(@)(@@) % إن اليزيديين قوم أحرزوا % % إرث الخلافة ليس فيه خلاف % 2(@)(@@) % قوم عناقفهم لحى ولحاهم % ريح ولكن العقول ضعاف % PageV01P3011 البحر : - 1(@)(@@) % يا شريفا لقرنه إشراف % وطريفا له بنات طراف % 2(@)(@@) % ناطح الأيل المقرن والكب % % ش مع الكركدن ليس تخاف % PageV01P3012 البحر : - 1(@)(@@) % ولوطي قدام وخلف عذلته % % فقال أخو العوجاء قولا مثقفا % % 2(@)(@@) % أنا السيف ذو الحدين تمت صرامتي % % ولست كمثل السيف ذي الحد والقفا % % PageV01P3013 البحر : - 1(@)(@@) % لها جبهة فيها سطوح نصيف % وصدغ لها غال بنصف رغيف % 2(@)(@@) % كأن بقايا المسك في صحن خدها % % بقايا سماد في جدار كنيف % % PageV01P3014 البحر : - 1(@)(@@) % يا درة البحر ضمها الصدف % ويا هلالا من دونه السدف % 2(@)(@@) % قلبي عن العالمين منصرف % وليس لي عن هواك منصرف % 3(@)(@@) % حتام لا نلتقي على دعة % وطيب عيش منا فنأتلف % PageV01P3015 البحر : - 1(@)(@@) % الزب زب للنسا % % ء يمقنه ويخفنه % 2(@)(@@) % أصبحن يستحلينه % % جدا ويستنظفنه % % 3(@)(@@) % أعظمنه فدعونه % % ريا وإن صحفنه % % 4(@)(@@) % لو يستطعن أكلنه % من شهوة ورشفنه % PageV01P3016 البحر : - 1(@)(@@) % رأيتك بينا أنت خل وصاحب % إذا أنت قد وليتنا ثانيا عطفا % % 2(@)(@@) % فإنك إذ أحنى حنوك معقب % بعادا لمن 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms696# باذلته الود والعطفا % % 3(@)(@@) % لكالقوس أحنى ما تكون إذا حنت % على السهم أنأى ماتكون له قذفا % % PageV01P3017 البحر : - 1(@)(@@) % هبا خليلي قد قضيتما وطرا % من الكرى فاستعيضا لذة أنفا % % 2(@)(@@) % لا تبلغا الدهر أقصى إربة لكما % % فاستبدلا لكما من آخر طرفا % % PageV01P3018 البحر : - 1(@)(@@) % إذا فقت الضئيل بحسن جسم % فلا يسبقك بالشيم الشريفه % 2(@)(@@) % فيصبح أفضل الرجلين جسما % وتصبح أعظم الرجلين جيفه % % PageV01P3019 البحر : - 1(@)(@@) % قد قلت إذ مدحوا الحياة فأكثروا % % للموت ألف فضيلة لا تعرف % 2(@)(@@) % فيه أمان لقائه بلقائه % % وفراق كل معاشر لا ينصف % % PageV01P3020 البحر : - 1(@)(@@) % وليس نسيم المسك ريح حنوطه % ولكنه ذاك الثناء المخلف % 2(@)(@@) % وليس صرير النعش ماتسمعونه % % ولكنه أصلاب قوم تقصف % PageV01P3021 البحر : - 1(@)(@@) % تسدي الفتى الأقدار من حيث لا يرى % % ويخطئه مظنونها ومخوفها % % PageV01P3022 البحر : - 1(@)(@@) % ثلاثة أشياء بها الهم يكشف % % تميل إليها النفس مني وتصرف % 2(@)(@@) % شراب وبستان وقطر سحابة % إذا قطرت أنواؤها ليس تخلف % 3(@)(@@) % ورابعة راح براحة شادن % بوجنته التفاح بالشم يقطف % 4(@)(@@) % وخامسة وصل الحبيب فإنه % % لذيذ وأما غيرها فتكلف % PageV01P3023 البحر : - 1(@)(@@) % سقى الله قصرا بالرصافة شاقني % % باعلاه قصري الدلال رصافي % % 2(@)(@@) % أشار بقضبان من الدر قمعت % يواقيت حمرا تستبيح عفافي % % PageV01P3024 البحر : - 1(@)(@@) % كلانا واجد في النا % % س ممن حله خلفا % % PageV01P3025 البحر : - 1(@)(@@) % حبذا حشمة الصديق إذا ما % % حجزت بينه وبين العقوق % 2(@)(@@) % حين لا حبذا انبساط يؤدي % % ه إلى بخس واجبات الحقوق % 3(@)(@@) % وكلت حاجتي إليك فأضحت % % وهي مني بموضع العيوق % 4(@)(@@) % وجعلت الصديق أولى بأن يل % % غى ويرضى بخلبات البروق % 5(@)(@@) % أحمد الله ما وردت من الإخ % % وان غير المكدر المطروق % % 6(@)(@@) % وإلى الله أشتكي أن ودي % % ليس ممن وددت بالمرزوق % % 7(@)(@@) % مقتي غير وامق تقرع القل % % ب فطوبى لوامق موموق % % 8(@)(@@) % كم ترى لي ذخيرة عند خل % سقطت من جرابه المخروق % % 9(@)(@@) % أيها المعشر الهداة إلى الرش % % د أبينوا لنا بيان الصدوق % % 10(@)(@@) % أين منجاتنا إذا ما لقينا % % من مسيغ الشجا شجا في الحلوق % % PageV01P3026 البحر : - 1(@)(@@) % قل للذين مدحتهم فكأنما % % مسخوا كلابا غير ذات خلاق % 2(@)(@@) % ردوا علي صحائفا سودتها % % فيكم بلا حق ولا استحقاق % 3(@)(@@) % ما كان مثلي مادحا أمثالكم % % لولا اتهامي ضامن الأرزاق % 4(@)(@@) % أسخطت خلاق البرية فيكم % فبلغتم مني رضى 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms697# الخلاق % % 5(@)(@@) % أغرقت في نزعي لكم ولربما % % حرم الرماة الصيد بالإغراق % % PageV01P3027 البحر : - 1(@)(@@) % لا تشم للمزن برقا % % إن نأى المزن فسحقا % % 2(@)(@@) % وانتجع أفق بني حم % % اد الأندين أفقا % % 3(@)(@@) % شائما فيهم بروقا % من كريم صيغ طلقا % % 4(@)(@@) % لبقا بالمجد طبا % خرقا بالمال خرقا % % 5(@)(@@) % يشتري الحمد فيغلى % % وهو الأربح صفقا % % 6(@)(@@) % شم بروق الحسن الأح % % سن أخلاقا وخلقا % % 7(@)(@@) % سيد من آل حما % % د مرعى ومسقى % % 8(@)(@@) % عم ألطافا وبرا % إذ جفا الدهر وعقا % % 9(@)(@@) % أصلح الله وأعلى % % آل حماد وأبقى % % 10(@)(@@) % وحباهم بنماء % يمحق الحساد محقا % % PageV01P3028 11(@)(@@) % فقأ الله عيونا % نحوهم خضرا وزرقا % % 12(@)(@@) % من أناس أصبحوا % % في دينهم سودا وبلقا % % 13(@)(@@) % خافقي الأحشاء طارت % تلكم الأحشاء خفقا % % 14(@)(@@) % حسدوا أذكى وأزكى % % أنفسا منهم وأتقى % % 15(@)(@@) % ولشتان لعمري % % بين من يهوي ويرقى % % 16(@)(@@) % ليس من يذهب علوا % مثل من يذهب عمقا % % 17(@)(@@) % آل حماد أناس % كرموا فرعا وعرقا % % 18(@)(@@) % جعلوا الأعراض بسلا % وعروض المال طلقا % % 19(@)(@@) % فإذا الغايات مدت % برزوا في المجد سبقا % % 20(@)(@@) % يابن بيت الحكم والحك % % مة والنعمة حقا % % PageV01P3029 21(@)(@@) % يابن من أصبح بين ال % % حق والباطل فرقا % % 22(@)(@@) % شهد الله يمينا % تنتق الأجيال نتقا % % 23(@)(@@) % أن إسماعيل يهدي % % هدي إسماعيل صدقا % % 24(@)(@@) % رب حكم منه قد أض % % حى لحكم الله وفقا % % 25(@)(@@) % ألجم الظلم فأدمى % % حنكا منه وشدقا % % 26(@)(@@) % يا عليا يتكنى % % بعلي عش موقى % 27(@)(@@) % كم فعال لك أضحى % % لعبيد القوت عتقا % % 28(@)(@@) % ثم لم تتركه حتى % % صار للأحرار رقا % % 29(@)(@@) % ليس عن عمد ليشقوا % % بك من دائك يشقى % % 30(@)(@@) % بل لك المن الذي أص % % بح للأعناق ربقا % % PageV01P3030 31(@)(@@) % كم نظير لك في الثر % % وة أكدى حين أبقى % % 32(@)(@@) % رحت كي تجبر عظما % وغدا ينهش عرقا % % 33(@)(@@) % والفتى الأوسع صدرا % يفضل الأوسع خلقا % % 34(@)(@@) % يابن إسماعيل فوزا % سدت من أفصح نطقا % % 35(@)(@@) % حسبنا بشرك برقا % وندى كفيك ودقا % % 36(@)(@@) % بخبخ أي سحاب % بخبخ ودقا وبرقا % % 37(@)(@@) % آل حماد غدوتم % أخصل الرامين وشقا % % 38(@)(@@) % هنأ الله ولي ال % عهد منكم ما تلقى % % 39(@)(@@) % فلقد لقي نصحا % منكم لم يك مذقا % % 40(@)(@@) % أنتم أصلحتم الشر % % ق وقد كان ملقى % PageV01P3031 41(@)(@@) % كادت الأرض تشقى % % من دماء وتسقى % % 42(@)(@@) % فسعيتم لصلاح ال % % أمر سعيا سد بثقا % % 43(@)(@@) % ورفأتم فيه للمل % كة والدولة 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms698# خرقا % % 44(@)(@@) % ورقيتم حية السل % % طان والحيات ترقى % % 45(@)(@@) % فرتقتم منه فتقا % وفتقتم منه رتقا % % 46(@)(@@) % وكشفتم ظلمات % لم تدع للناس شرقا % % 47(@)(@@) % لا عدمتم عند أمر % معضل رتقا وفتقا % 48(@)(@@) % تلك مسعاة أناس % جمعوا حزما ورفقا % % 49(@)(@@) % قرمطت في المجد أيد % ومشقتم فيه مشقا % % 50(@)(@@) % لست أختار على شق % ق أراكم فيه شقا % % PageV01P3032 51(@)(@@) % ما أرى مدحي لمجد % غير ذاك المجد لفقا % % 52(@)(@@) % أنتم الحكام والأع % لام والأعلون مرقى % % 53(@)(@@) % وبكم يستفتح الرز % ق من استفتح رزقا % % 54(@)(@@) % لو خلا الأبرار منكم % % أصبح المشرب رنقا % % 55(@)(@@) % أو خلا الفجار منكم % % ملأوا الآفاق فسقا % % 56(@)(@@) % فبقيتم لصلاح % بكم لا شك يبقى % % 57(@)(@@) % تفلقون الهام والأف % % هام بالأحكام فلقا % % 58(@)(@@) % توسعون الناس تنفي % % سا وأهل الظلم خنقا % % 59(@)(@@) % ما يسيء الرأي فيكم % رجل يحمل طرقا % % 60(@)(@@) % لا تعدوا حذق مطري % % كم وإن برز حذقا % % PageV01P3033 61(@)(@@) % إنما صادف درا % في بحور فتنقى % % 62(@)(@@) % منكم حلاكم الما % % دح ما جل ودقا % % 63(@)(@@) % وجد المجرى دميثا % فجرى لا يتوقى % % 64(@)(@@) % لو تعداكم لأعيا % % ما تأنى أو لشقا % % PageV01P3034 البحر : - 1(@)(@@) % لئن أصبحت محروما % نوالك غير مرزوقه % 2(@)(@@) % على أني صريح الود % دقدما غير ممذوقه % % 3(@)(@@) % لكم من وامق في النا % % س لا يحظى بموموقه % % 4(@)(@@) % ولست بأول العشا % % ق لم يسعد بمعشوقه % % PageV01P3035 البحر : - 1(@)(@@) % أرى الضيم ذلا على أنني % % أرى النصر من صاحب المن رقا % % 2(@)(@@) % فلا تسأل النصر إلا امرأ % تراه بنصرك يقضيك حقا % % 3(@)(@@) % لساء اتقاؤك إما اتقي % ت أن تستضام بأن تسترقا % % 4(@)(@@) % فكم للمظالم حمالة % وعش عيش حر ملقى موقى % % PageV01P3036 البحر : - 1(@)(@@) % وإني لذو حلف حاضر % إذا ما اضطررت وفي الحال ضيق % 2(@)(@@) % وهل من جناح على مرهق % يدافع بالله مالا يطيق % PageV01P3037 البحر : - 1(@)(@@) % صبرا أبا الصقر فكم طائر % خر صريعا بعد تحليق % 2(@)(@@) % زوجت نعمى لم تكن كفأها % فصانها الله بتطليق % 3(@)(@@) % وكل نعمى غير مشكورة % رهن زوال بعد تمحيق % % 4(@)(@@) % لا قدست نعمى تسربلتها % % كم حجة فيها لزنديق % 5(@)(@@) % صبرا لهاج ذاد عنك الكرى % % وشاب دنياك بترنيق % % 6(@)(@@) % أرقه مدحك لا مجديا % فاقتص تأريقا بتأريق % % PageV01P3038 البحر : - 1(@)(@@) % يا ذا الذي ضن بمعروفه % % عني وقد قاسيت فيه الأرق % 2(@)(@@) % أقلني العثرة إني امرؤ % ما زلت في الصحو كثير الزلق 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms699# % 3(@)(@@) % رضيت مما كنت أملته % بأجر وراقي وغرم الورق % 4(@)(@@) % فاجعلهما حظي وعجلهما % % وارض من المطل بما قد سبق % % 5(@)(@@) % إن جديد المطل مستقبح % وأقبح المطلين مطل خلق % % 6(@)(@@) % ولست أهجوك بشيء سوى % % إنشاد شعري فيك وسط الحلق % % 7(@)(@@) % وأن إذا استخبر مستخبر % ما ثوب المادح قلت القلق % % PageV01P3039 البحر : - 1(@)(@@) % ما للبضائع بين الناس كلهم % % غير الفياشل قد بارت بها السوق % 2(@)(@@) % والله لو أن قسطنطينة افتتحت % برمح أشجع من خبت به النوق % 3(@)(@@) % ما نال منها ولا من فضل نجدته % % ما نال من ثفر قسطنطينة الحوق % % 4(@)(@@) % تكدي الرماح ويكدى الذائدون بها % % لكن أير أبي العباس مرزوق % 5(@)(@@) % تراه يغدو فيغدو موكب زجل % % تردي الهماليج فيه والتعانيق % % 6(@)(@@) % إذ لا يرى لأبي العباس حينئذ % حق السلام لقد أزرى به الموق % % 7(@)(@@) % يزور كبرا وما أضعاف قيمته % % من الخساسة عند الله ثفروق % % 8(@)(@@) % هذا وليس عليه من غباوته % % بين السفين وبين الخيل تفريق % % 9(@)(@@) % أرى دم العلج يغلي في ترائبه % % على الحميم ولكن ليس مهريق % % PageV01P3040 البحر : - 1(@)(@@) % رجت منك نفسي سبقك الغيث بالندى % % فحم قضاء الله للغيث بالسبق % 2(@)(@@) % فكن ثانيا للغيث إذ كان بادئا % ولا تسبق الشأوين يا واحد الخلق % 3(@)(@@) % ولا تمتعض أن نسبق الغيث مرة % فما بين ذي سبق وتاليه من فرق % 4(@)(@@) % وأنت فتبقى الدهر والغيث ينقضي % % وتنهل بالجدوى وينهل بالودق % 5(@)(@@) % أبشر بلا جدوى وأنت مخيلة % مملأة بالماء صادقة البرق % 6(@)(@@) % وعش لملوك الناس ما ذر شارق % % لترتق في فتق وتفتق في رتق % % 7(@)(@@) % وتسمو إلى العلياء حتى تنالها % % وتستنبيء الغيب الخفي من العمق % % 8(@)(@@) % وتلقى وجوه الأولياء وحسبهم % % بوجهك ذاك الطلق في يومك الطلق % % PageV01P3041 البحر : - 1(@)(@@) % أبعد لقاي دونك كل قفر % يعز الشخص فيه أن يلاقى % % 2(@)(@@) % وإعمالي إليك به المطايا % % وقد ضرب الظلام له رواقا % % 3(@)(@@) % ورفضي النوم إلا أن تراني % % أعانق واسط الكور اعتناقا % % 4(@)(@@) % تسوق بنا الحداة فليس ندري % % أشوقا كان ذلك أم سياقا % % 5(@)(@@) % أصادف ضرة المعروف شكري % % لديك ولا أذوق لها فواقا % % 6(@)(@@) % ففي أست أم الذي استرعاك خيلا % وأنت تقل أن ترعى عناقا % % 7(@)(@@) % وخولك الصهيل وكان منه % % كثيرا أن يسمعك النهاقا % % 8(@)(@@) % غدا يعلو الجياد وكان يعلو 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms700# % % إذا ما استفره السبت الرقاقا % % 9(@)(@@) % أعنتها الشسوع فإن عراها % % حفاء الكد أنعلها طراقا % % 10(@)(@@) % فزوج بعد فقر منه نعمى % % أراني الله صبحتها الطلاقا % % PageV01P3042 البحر : - 1(@)(@@) % يا نجدة الروم في بطارقها % % وحكمة الروم في مهارقها % % 2(@)(@@) % هل فيكما نصرة مؤزرة % لزاهق النفس أو كزاهقها % % 3(@)(@@) % غيب عن عينه مغافصة % أفضل ما اعتده لفاتقها % % 4(@)(@@) % يا حر صدري على الخطوب وما % % تطويه بالغيب من بوائقها % % 5(@)(@@) % أخرجت من جنتي مفاجأة % آمن ما كنت في حدائقها % % 6(@)(@@) % بينا استماعي هديل هادلها % % إذ راع قلبي نعيق ناعقها % % 7(@)(@@) % فارقني قاسم لطيته % % يا لهف نفسي على مفارقها % % 8(@)(@@) % بان عن العين وهو في فكري % % أدنى إلى النفس من معانقها % % 9(@)(@@) % وكم أناس مباينين غدوا % % ألصق بالنفس من ملاصقها % % 10(@)(@@) % يا لهف نفسي على موفقها % % يا لهف نفسي على موافقها % % PageV01P3043 11(@)(@@) % كان حياة صفت بعافية % هيهات منها ملال ذائقها % % 12(@)(@@) % هل يخلف البدر وجه سيدنا % % كلا ولا الشمس في مشارقها % % 13(@)(@@) % أو يخلف البدر نور ضحكته % % إذا انجلى الليل عن بوارقها % % 14(@)(@@) % أو يخلف الغيث راحتيه لنا % % كلا وأخلاقه وخالقها % % 15(@)(@@) % أو يخلف البحر ما تجيش به % % أفكاره تلك من دقائقها % % 16(@)(@@) % فتى إذا ما الشواكل التبست % شق الأباطيل عن حقائقها % % 17(@)(@@) % ذو شيمة لم تزل مواعدها % % في الصدق تجري على موائقها % % 18(@)(@@) % والله لولا تطيري سفحت % عيني دم القلب من حمالقها % % 19(@)(@@) % لكن على غيره البكاء ولا % % زالت أمانيه طوع سائقها % % 20(@)(@@) % يرمي به العمر في خوالفه % % وحلبة المجد في سوابقها % % PageV01P3044 21(@)(@@) % ويا نداماي لاعدمتكم % يا صفوة النفس من أصادقها % % 22(@)(@@) % طلقت من بعدكم مناعم أص % % بحت أرجي رجاعي طالقها % % 23(@)(@@) % كأسي مذ غبتم معطلة % لم تجر عندي على طرائقها % % 24(@)(@@) % غابقها ذاهل وصابحها % % عن شأنها ذاهل كغابقها % % 25(@)(@@) % والعود والناي صامتان معا % أو مسعدا عبرة ودافقها % % 26(@)(@@) % ظعنتم والربيع منصرم % والأرض تبكي على شقائقها % % 27(@)(@@) % فكان في ظعنكم لها شغل % على كل ما مح من روانقها % % 28(@)(@@) % ليس لبغداذ غيركم شجن % ولا سوى ذكركم بشائقها % % 29(@)(@@) % صبرا جميلا فإنها بكر ال % % عيش ولا بد من ودائقها % % 30(@)(@@) % لكن آصالها مؤملة % آمننا الله من عوائقها % % PageV01P3045 31(@)(@@) % كأننا بالقيان تسمعنا % % مثل المها العين في أبارقها % % 32(@)(@@) % من كل رود 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms701# إذا تضمنت ال % % ألحان أربت على مخارقها % % 33(@)(@@) % أمانة الله إنها زنة ال % % غبراء مبسوطها وخالقها % % 34(@)(@@) % ألا قرأتم على مؤملنا % % سلام صادي الأحشاء خافقها % % 35(@)(@@) % وقلتم غير كاذبين له % % عن آمل النفس فيه واثقها % % 36(@)(@@) % ناشر ذكر إذا التقت عصب % حالت به المسك في مناشقها % % 37(@)(@@) % ألية يا أبا الحسين بآ % % لائك إني لغير ماحقها % % 38(@)(@@) % إن يكن الظلم منك يرهقها % % فظلم مولاك غير راهقها % % 39(@)(@@) % كم نعمة منك لا يقر بها % % ينطق عنها ذرور شارقها % % 40(@)(@@) % يا سارق الغر من صنائعه % % مولاك ماعاش غير سارقها % % PageV01P3046 41(@)(@@) % وفائق الحال حشوه شيم % يعلمه الله غير فائقها % % 42(@)(@@) % أضحى يروم العلا فقلت له % % دع رائقات العلا لرائقها % % 43(@)(@@) % يا من يحب العلا منافقة % هيهات أعيت على منافقها % % 44(@)(@@) % فلا تحاول خداع كيسة % % تضن بالصفو عن مماذقها % % 45(@)(@@) % ولا تخل أنها مصادقة % أخرى الليالي سوى مصادقها % % 46(@)(@@) % لن يجمع المال والعلا مقة % بل وامق المال غير وامقها % % 47(@)(@@) % فكل إلى قاسم ولا يتها % % وخل معشوقة لعاشقها % % 48(@)(@@) % ذاك الذي لم تزل شمائله % أحلى من الهيف في مناطقها % % 49(@)(@@) % خذها كدر الفتاة منتظما % % أوعتر المسك في مخانقها % % 50(@)(@@) % وإنني ملحق بها فقرا % سوابق الشعر من لواحقها % % PageV01P3047 51(@)(@@) % لا يخطىء السالكون قصدهم % % ميلا إلى فتنة وناعقها % % 52(@)(@@) % وليعدل الجائرون عن قحم % بمن أتاها محيق حائقها % % 53(@)(@@) % خلافة الله في ملوك بني ال % % عباس من خير رزق رازقها % % 54(@)(@@) % قبيلة لست عادما رشدا % في كهلها لا ولا مراهقها % % 55(@)(@@) % فالحلم والعلم في أشائبها % % والجود والبأس في غرانقها % % 56(@)(@@) % يكفيك أن أصبحت خلافتهم % وابن سليمان حبل عاتقها % % 57(@)(@@) % وأن إفضاله ونائله % % لطالبي الفضل من مرافقها % % 58(@)(@@) % يا لك من نحلة معسلة % وحية منه في سرادقها % % 59(@)(@@) % به استقامت أمور مملكة % عوجاء واستوسقت لواسقها % % 60(@)(@@) % كأن تصريفه الخطوب لها % % نتق جبال عنت لناتقها % % PageV01P3048 61(@)(@@) % جلت هناك الخطوب وارتفعت % % شاهاتها الصيد عن بياذقها % % 62(@)(@@) % تعد منه لحربها قلما % يفرج للرمح في مضايقها % % 63(@)(@@) % ويهتدي عامه السيوف به % % من هام قوم إلى مفارقها % % 64(@)(@@) % أحصن من سور كل عالية الس % سور حفاظا ومن خنادقها % % 65(@)(@@) % كم نوبة يذعر الزمان لها % % يعده أهله لطارقها % % 66(@)(@@) % ورشدة كان من مفاتحها % % وغية كان من مغالقها % % 67(@)(@@) % يلقى 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms702# دهاء الرجال حيلته % أملا بالضعف من أحامقها % % 68(@)(@@) % يترك بالحول حول حولها % % وهو سواء وموق مائقها % % 69(@)(@@) % يرمي بدهياء من فلائقه % % في وجه دهياء من فلائقها % % 70(@)(@@) % كم زاحم الدهر فوق مدحضة % زلج فما زل عن زحالقها % % PageV01P3049 71(@)(@@) % كم أنشأ المزن من ندى وردى % لمعتفي دولة وفاسقها % % 72(@)(@@) % فأمطر البر من مغاوثها % % وفاجر القوم من صواعقها % % 73(@)(@@) % يا آل وهب سمت بكم رتب % يقصر السؤل عن سوامقها % % 74(@)(@@) % يا عترة لم تزل ممدحة % ينكب الطعن عن خلائقها % % 75(@)(@@) % فاتت فما ذمنا بلاحقها % % كلا ولا مدحنا بسابقها % % 76(@)(@@) % يكرم مخبوركم على محن % % من الليالي ومن صوافقها % % 77(@)(@@) % كأنكم أنصل مهندة % يبدي لنا الصقل عن سفاسقها % % 78(@)(@@) % أضحى نثا الملك والملوك بكم % أذكى من المسك في مفارقها % % 79(@)(@@) % وفات صنديدكم بسابقة % طالبها الدهر غير لاحقها % % 80(@)(@@) % وازت عراها ملوك ملتنا % % فكنتم ثم من وثائقها % % PageV01P3050 81(@)(@@) % فعولت منكم هناك على % % فاتق أحوالها وراتقها % % 82(@)(@@) % واستحفظته قوام دولتها % % وما يلي ذاك من علائقها % % 83(@)(@@) % وكفلته برفد يابسها % % ووكلته بكيد مارقها % % 84(@)(@@) % فحطت الفقر عن عواتقنا % % وحطت الهم عن عواتقها % % 85(@)(@@) % وبين الجري من صواهلها % % خلاف ما كان من نواهقها % % 86(@)(@@) % فلا تخافوا أمنتم أبدا % ما أينع الطلع في بواسقها % % 87(@)(@@) % جعلتم عرفكم معاقلكم % % من الليالي ومن طوارقها % % 88(@)(@@) % وجاعل العرف من معاقله % % أنجى من العصم في شواهقها % % 89(@)(@@) % نعماؤكم في الأنام قد طرفت % عين من الله عين رامقها % % 90(@)(@@) % وعصبة يحذقون مدحكم % من مجدكم جاء حذق حاذقها % % PageV01P3051 91(@)(@@) % لو مدحت غيركم فحولهم % % لقصر اللوم عن شقاشقها % % 92(@)(@@) % كم مدحة لوعدتكم خرست % % كنتم سبيلا لنطق ناطقها % % 93(@)(@@) % ومدحة لوعدتكم كذبت % كنتم سبيلا لصدق صادقها % % 94(@)(@@) % وكيف لا تبرز العقول لكم % % وصائف الشعر في قراطقها % % 95(@)(@@) % وفي سواكم كساد كاسدها % % وفي ذراكم نفاق نافقها % % 96(@)(@@) % لكنني قائل لبارقة % منكم لغير صبيب وادقها % % 97(@)(@@) % عدلك يا مزنة هجرت كرى % % عيني قدما لشيم بارقها % % 98(@)(@@) % أأتقي الدهر ذا الهنات بكم % % وأعظمي طعمة لعارقها % % 99(@)(@@) % تالله ما عزتي لهاضمها % % فيكم ولا هيبتي لخارقها % % PageV01P3052 البحر : - 1(@)(@@) % متهلل زجل تحن رواعد % في حجرتيه وتستطير بروق % 2(@)(@@) % سدت أوائله سبيل أواخر % لم يدر سائقهن كيف يسوق % 3(@)(@@) % فسجا وأسعد حالبيه بدرة % منه سواعد ثرة وعروق % % 4(@)(@@) % وتنفست فيه 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms703# الصبا فتبجست % منه الكلى فأديمه معقوق % % 5(@)(@@) % حتى إذا قضيت لقيعان الملا % عنه حقوق بعدهن حقوق % % 6(@)(@@) % طفقت رواياه تجر مزادها % % فوق الربا ومزادها مشقوق % % 7(@)(@@) % وتضاحك الروض الكئيب لصوبه % % حتى تفتق نوره المرتوق % % 8(@)(@@) % وتنسمت نفحاته فكأنه % % مسك تضوع فأره مفتوق % 9(@)(@@) % وتغرد المكاء فيه كأنه % % طرب تعلل بالغناء مشوق % % PageV01P3053 البحر : - 1(@)(@@) % تناسيت أمري واطرحت حقوقي % % وعاديت بري واصطفيت عقوقي % % 2(@)(@@) % ما ذاك إلا أنني سهم نصرة % فنحو العدا نصلي ونحوك فوقي % % 3(@)(@@) % أتغفل ريي بعدما قد غرستي % % قديما وساخت في ثراك عروقي % % 4(@)(@@) % ولاحت بروق منك أخلف رعدها % % على أنني ما أخلفتك بروقي % % PageV01P3054 البحر : - 1(@)(@@) % رأيت أبا إسحاق والفحل فوقه % % وللأير في الأحشاء منه خفيق % 2(@)(@@) % فأومى بأن نكني فقلت له انتظر % % فراغ أخينا والمكان مضيق % 3(@)(@@) % فقال مجيبا وهو في سكراته % % له نخرات بينهن شهيق % % 4(@)(@@) % لعمرك ما ضاقت بلاد بأهلها % % ولكن أخلاق الرجال تضيق % % PageV01P3055 البحر : - 1(@)(@@) % ترى أصفرها الفاق % % ع في أبيضها المونق % 2(@)(@@) % كعين الناظر الضاح % % ك في محجره المشرق % PageV01P3056 البحر : - 1(@)(@@) % إلى الزهاد في الدنيا % % جنان الخلد تشتاق % 2(@)(@@) % عبيد من خطاياهم % % إلى الرحمن أباق % 3(@)(@@) % حدتهم نحوه الرغب % % ة والرهبة فانساقوا % % 4(@)(@@) % وزافت لهم الدنيا % % وعاقتهم فما انعاقوا % % 5(@)(@@) % عليهم حين تلقاهم % سكينات وإطراق % % 6(@)(@@) % بقاياهم من الخدم % % ة أشباح وأرماق % % 7(@)(@@) % توهمهم وقد مالت % لسكر النوم أعناق % % 8(@)(@@) % وقد قاموا ولا يهج % % ع من ذاق الذي ذاقوا % % 9(@)(@@) % يضجون إلى الله % % ودمع العين مهراق % % 10(@)(@@) % مليك الناس أعتقنا % % فإعتاقك إعتاق % % PageV01P3057 11(@)(@@) % مليك الناس خلصنا % % إذا ما كشفت ساق % % 12(@)(@@) % مليك الملك هل مما % % تطوقناه إطلاق % 13(@)(@@) % ففي أعناقنا طرا % من الآثام أطواق % 14(@)(@@) % رجوناك ولا يخل % ف من رجاك مصداق % 15(@)(@@) % وخفناك وقد تعفو % % وقلب المرء خفاق % % PageV01P3058 البحر : - 1(@)(@@) % يا من غدا بين تأميل وإشفاق % % مني ومن حسب نفسي أنه باقي % % 2(@)(@@) % أما دبسية الكبرى بحضرتكم % % تحدو الكؤوس بماخوري إسحاق % 3(@)(@@) % فلا أراد بلى إن كادكم قدر % بجلنار وقاني زهدكم واقي % % 4(@)(@@) % الحمد لله لا أدعى لصيدكم % إلا إذا كان صيدا مثل إخفاق % % 5(@)(@@) % لا زلت مدعى لمبلو أساعده % % على الكريهة لا مهلى لمشتاق % % 6(@)(@@) % هل من سبيل إلى تجديد ودكم % وهل يجدد شيء بعد إخلاق % % 7(@)(@@) % لا نكر 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms704# قد تصبح العيدان مورقة % كما تبدل عريا بعد إيراق % % 8(@)(@@) % يا وجه ذي كرم حالت بشاشته % لن تحسن الشمس إلا ذات إشراق % % 9(@)(@@) % أشكو إلى الله ظلما لا انكشاف له % % ما زلت أرزق منه شر أرزاق % 10(@)(@@) % غامت علي بلا ظل ولا ورق % سماء مولى مظل مشمس ساقي % % PageV01P3059 البحر : - 1(@)(@@) % ألم تر أن المال يهلك أهله % إذا جم آتيه وسد طريقه % 2(@)(@@) % ومن جاور الماء العزيز مجمه % وسد سبيل الماء فهو غريقه % % PageV01P3060 البحر : - 1(@)(@@) % من ظن أن الإستزادة في الهوى % % تؤول بمعشوق إلى هجر عاشق % 2(@)(@@) % طلبت لديكم بالعتاب زيادة % وعطفا فأعتبتم بإحدى البوائق % % 3(@)(@@) % فكنت كمستسق سماء مخيلة % حيا فأصابته بإحدى الصواعق % PageV01P3061 البحر : - 1(@)(@@) % نحمد الله حين من وأبقى % % بعدما كاد كوكب الأرض يرقى % % 2(@)(@@) % كاد يهوي من السماء إلى الأر % % ض شهاب أضاء غربا وشرقا % % 3(@)(@@) % أيها الدهر إنه واحد النا % % س فرفقا بواحد الناس رفقا % % 4(@)(@@) % وتنمر للشانئين أبا إس % % حاق بعدا للشانئيه وسحقا % % 5(@)(@@) % قلت للمظهر الشماتة أظهر % % ت بإظهارك الشماتة فسقا % % 6(@)(@@) % لو تكون المحق كنت محبا % لامرىء لم يزل يعز المحقا % % 7(@)(@@) % قد أقال الإله بالرغم من ان % % فك من لم يزل يقيل وأبقى % % 8(@)(@@) % ووقى نفسه وهذب بالشك % % ر تقواه فعاد أتقى وأنقى % % 9(@)(@@) % ووقاه محق البصيرة لكن % % محق الذنب والخطيئة محقا % % 10(@)(@@) % إن يقل بعد عثرة فحقيق % لم يزل مثله ملقى موقى % % PageV01P3062 11(@)(@@) % غير نكر أن يأسر الله عبدا % بعد عتق وأن يجدد عتقا % % 12(@)(@@) % ليرى العبد فضل رب كريم % ويرى الرب منه صبرا وصدقا % % 13(@)(@@) % أيها الحاكم الذي طاب فرعا % في نصاب الهدى وأصلا وعرقا % % 14(@)(@@) % شكر الله منك أنك ما أع % ززت بطلا ولا تهضمت حقا % % 15(@)(@@) % رب خطب صدعت فيه بحكم الل % % ه لولم تكن لأصبح رتقا % % 16(@)(@@) % وفساد أصلحته بتأني % % ك ولو لم تكن لأصبح فتقا % % 17(@)(@@) % فابق في غبطة وصحة جسم % فحقيق بأن تصح وتبقى % % 18(@)(@@) % ووقتك الردى نفوس رجال % أنت أخشى لله منهم وأتقى % % 19(@)(@@) % وما لقينا لك من مادح % إلا ملقى منطق صادق % 19(@)(@@) % سنترك ما ساء العد من فعالنا % % إذا تركت شمس النهار شروقها % % PageV01P3063 19(@)(@@) % ننزعنا إلى آبائنا في إبائهم % % وهل تشبه العيدان 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms705# إلا عروقها % % 19(@)(@@) % أناة إذا باغس ابى أن يودنا % % عليها أقمنا للعداوة سوقها % % 19(@)(@@) % نلقى عقوقا من رجال مبرة % فإن لج لقينا عقوقا عقوقها % % 19(@)(@@) % ولسنا نهر الموت حتى نذوقه % % ومن ذا يهر الكأس حتى يذوقها % % 19(@)(@@) % ننادم أقواما لغير هوادة % صبوح المنايا تارة وغبرقها % % 19(@)(@@) % كي تبين الهدى وتجعل بين السريعقد كان من رأب الصدوع التيذكرت قتل الأحوال الفاسق مع انحطاط السعر ثم الذيتلاهما من مهلك المارق وانفتق الجو بريح غدتروحا بمن الفاتق الراتق وانقلب المضطاف في شهرنامرتبعا من جودك الدافق ومن ندى كفيك جاد الشر % % حق والباطل المموه فرقا % % 19(@)(@@) % طويللعمرك ما اعطى الرجال حقوقهم % % كإعطائهم بيض السيوف حقوقها % % 19(@)(@@) % قد كان من رأب الصدوع التي % % ذكرت قتل الأحوال الفاسق % 19(@)(@@) % حق أتاح الله لي قوله % وقد يتاح الصدق للناطق % % 19(@)(@@) % وكل ما كنت تفاءلته % % فوافق الحق بلا عائق % % PageV01P3064 19(@)(@@) % ومن ندى كفيك جاد الشرى % % شؤبوب الحق بلا عائق % % 19(@)(@@) % وانقلب المضطاف في شهرنا % % مرتبعا من جودك الدافق % % 19(@)(@@) % وانفتق الجو بريح غدت % % روحا بمن الفاتق الراتق % % 19(@)(@@) % مع انحطاط السعر ثم الذي % % تلاهما من مهلك المارق % % 19(@)(@@) % وكنا إذا لم تعطينا الحق عصبة % طعنا كلاها أو ضربنا فروقها % % 20(@)(@@) % كل الخلال التي فيكم محاسنكم % % تشابهت منكم الأخلاق والخلق % 21(@)(@@) % كأنكم شجر الأترج طاب معا % % حملا ونورا وطاب العود والورق % PageV01P3065 البحر : - 1(@)(@@) % صدور فوقهن حقاق عاج % وحلي زانه حسن اتساق % 2(@)(@@) % يقول الناظرون إذا رأوه % أهذا الحلي من هذي الحقاق % 3(@)(@@) % وما تلك الحقاق سوى ثدي % قدرن من الحقاق على وفاق % % 4(@)(@@) % نواهد لا يعد لهن عيب % سوى منع المحب من العناق % % PageV01P3066 البحر : - 1(@)(@@) % صحائف لي فيها ذنوب كثيرة % لديك وكفاراتها ان تخرقا % % 2(@)(@@) % فبالمال إن المال رب تجله % تطول بها مردودة كي تمزقا % % PageV01P3067 البحر : - 1(@)(@@) % تبارك الله خالق الكرم ال % % بارع من حمأة ومن علق % 2(@)(@@) % ماذا رعيناه في جناب فتى % % كالبدر يجلو غواشي الغسق % 3(@)(@@) % أزمانه كلها بنائله % % مثل زمان الربيع ذي الأنق % 4(@)(@@) % أشهر في الناس بالجميل من ال % % أبلق بين الجياد بالبلق % % 5(@)(@@) % فتى يرى المجد ما أخل به الت % مجيد كالحق غير ذي الطبق % % 6(@)(@@) % فيشتري عالي الثناء ولو أ % % ملق 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms706# من ماله سوى العلق % % 7(@)(@@) % تلقاه كالمربع المريع إذا % % شئت وطورا كالمورد الرفق % % 8(@)(@@) % فراتع فيه غير ذي غصص % وكارع فيه غير ذي شرق % % 9(@)(@@) % يكنى أبا الفضل وهو منتجع ال % % فضل وماقلت ذاك عن ملق % % 10(@)(@@) % وخير مايكتنى الرجال به % % كنية لا نحلة ولاسرق % % PageV01P3068 11(@)(@@) % عبد المليك المقلد المنن ال % % زهر قديما معاقد الريق % % 12(@)(@@) % يتخذ المال حين يملكه % واقية كالدروع والدرق % % 13(@)(@@) % من آل عباس الكرام ذوي ال % % سؤدد والفائزين بالسبق % 14(@)(@@) % بحر بحور إذا نزلت به % % أصبحت من موجه بمصطفق % % 15(@)(@@) % يفهق بالنائلين ساجله % % عند السؤالين أيما فهق % % 16(@)(@@) % منطلق الكف واللسان إذا % % سوئل وامتيح أي منطلق % % 17(@)(@@) % بنائل من ندى وآخر من % % علم ففيه أتم مرتفق % % 18(@)(@@) % يجري إلى كل غاية شطط % لم تلتمس قبله ولم تطق % % 19(@)(@@) % كما جرى الطرف غير ذي صكك % يفل من غربه ولاطرق % 20(@)(@@) % شاهد أعراقه التي كرمت % % صفاء أخلاقه من الرنق % % PageV01P3069 21(@)(@@) % أصبح من فضله يحل من ال % % أهواء طرا بملتقى الفرق % % 22(@)(@@) % ظلنا لديه بمنزل خصب % في مرع تارة وفي غدق % 23(@)(@@) % يسمعنا الشدو عنده غرد % كالسطر في المسمعين لا اللحق % % 24(@)(@@) % يشدو فيحيي لنا السرور وإن % % ألفاه ميتا في آخر الرمق % % 25(@)(@@) % متى يقدر لمن ينادمه % مصطبح يتصل بمغتبق % 26(@)(@@) % يسقي الندامى فيشربون له % % كشرب فرعون ساعة الغرق % % 27(@)(@@) % قديمه مطرب ومحدثه % فهو جديد الجديد والخلق % % 28(@)(@@) % ماعيبه غير أنه رجل % يدعو ذويحلمنا إلى النزق % % 29(@)(@@) % يقلق من حسن مايجيء به الز % زميت بل يطمئن ذو القلق % % 30(@)(@@) % كنيته شقة السلامة والس % % سلم سلام لتلك في الشققص أبو سليمان ذو الإصابة وال % % PageV01P3070 31(@)(@@) % إحسان وابن الملوك لا السوق % ياحسن ذاك الغناء يشفعه % % 32(@)(@@) % هدير تلك الحمائم الحزق % من ذي تلاوين وشيه حسن % 33(@)(@@) % ومن بهم الدجى ومن لهق % % ونحن نسقي شراب ذي فجر % 34(@)(@@) % ثناؤه من فواكه الرفق % % لايمنع الري طالبيه ولا % % 35(@)(@@) % يسقي نديما له على تأق % % وفاه قوامه قيامهم % 36(@)(@@) % وأنفقت كفه بلا فرق % % على دنان كأنها جثث % 37(@)(@@) % من قوم عاد عظيمة الخلق % % فجاء شيء إذا الذباب دنا % % 38(@)(@@) % منه دنوا دنا من الزهق % % يلقاك في رقة الشراب وفي % % 39(@)(@@) % نشر الخزامى وصفرة الشفق % ظاهره ظاهر يحرمه % % 40(@)(@@) % وما 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms707# على شاربيه من رهق % % له صريح كأنه ذهب % PageV01P3071 41(@)(@@) % ورغوة كاللآلىء الفلق % % يختال في منظر يزينه % % 42(@)(@@) % من الرحيق العتيق مسترق % تديره جونة تحرق بالد % % 43(@)(@@) % ل إذا البيض جدن بالرمق % % سوداء لم تنتسب إلى برص الش % 44(@)(@@) % قر ولا كلفة ولابهق % % ليست من العبس الأكف ولا ال % % 45(@)(@@) % فلح الشفاه الخبائث العرق % % بل من بنات الملوك ناعمة % 46(@)(@@) % تنشر بالدل ميت الشبق % % في لين سمورة تخيرها ال % % 47(@)(@@) % فراء أو لين جيد الدلق % تذكرك المسك والغوالي والس % 48(@)(@@) % سك ذوات النسيم والعبق % هيفاء زينت بخمص محتضن % 49(@)(@@) % أوفى عليه نهود معتنق % % غصن من الأبنوس ألف من % % 50(@)(@@) % مؤتزر معجب ومنتطق % % يهتز من ناهديه في ثمر % PageV01P3072 51(@)(@@) % ومن دواجي ذراه في ورق % % أكسبها الحب أنها صبغت % 52(@)(@@) % صبغة حب القلوب والحدق % فانصرفت نحوها الضمائر وال % % 53(@)(@@) % أبصار يعنق أيما عنق % يفتر ذاك السواد عن يقق % 54(@)(@@) % من ثغرها كاللآلىء النسق % كأنها والمزاح يضحكها % % 55(@)(@@) % ليل تفرى دجاه عن فلق % % سحماء كالمهرة والمطهمة الد % 56(@)(@@) % دهماء تنضو أوائل الصيق % % تجري ويجري رسيلها معها % % 57(@)(@@) % شأوين مستعجلين في طلق % % لها هن تستعير وقدته % 58(@)(@@) % من قلب صب وصدر ذي حنق % % كأنما حره لخابره % % 59(@)(@@) % ما ألهبت في حشاه من حرق % % يزداد ضيقا على المراس كما % % 60(@)(@@) % تزداد ضيقا أنشوطة الوهق % % له إذا ما القمد خاطه % % PageV01P3073 61(@)(@@) % أزم كأزم الخناق بالعنق % يقول من حدث الضمير به % % 62(@)(@@) % طوبى لمفتاح ذلك الغلق % % أخلق بها أن تقوم عن ذكر % 63(@)(@@) % كالسيف يفري مضاعف الحلق % % إن جفون السيوف أكثرها % % 64(@)(@@) % أسود والحق غير مختلق % % خذها أبا الفضل كسوة لك من % % 65(@)(@@) % خر الأماديح لا من الخرق % % وصفت فيها الذي هويت على ال % % 66(@)(@@) % وهم ولم تختبر ولم تذق % إلا بأخبارك التي وقعت % 67(@)(@@) % منك إلينا عن ظبية البرق % حاشا لسوداء منظر سكنت % 68(@)(@@) % دارك إلا من مخبر يقق % % وبعض مافضل السواد به % % 69(@)(@@) % والحق ذو سلم وذو نفق % % أن لا تعيب السواد حلكته % 70(@)(@@) % وقد يعاب البياض بالبهق % % واها لها خلعة تشق أخا الض % PageV01P3074 71(@)(@@) % ضغن ولا تستشق عن حرق % % أتاك طوعا وداد قائلها % % 72(@)(@@) % ولم يعد كارها ولم يسق % وإن منعت الصحاب أكسية % 73(@)(@@) % تقي أذى القر أو 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms708# أذى اللثق % مستأثرا دونهم بلبسكها % % 74(@)(@@) % لامعقبا فيقة من الفيق % % أعقبهم لاتقم بمخترق الذ % % 75(@)(@@) % ذم فتلفى بأي مخترق % % لحاجتي إن بعثتها لي في % % 76(@)(@@) % إسكاف والدير وجه متفق % % أولا فما سد باب معذرة % 77(@)(@@) % كلا ولا سد باب مرتزق % % ن % PageV01P3075 البحر : - 1(@)(@@) % أقول وقدقالت لطالب رفدها % % رويدك إن الرفق أبقى وألحق % % 2(@)(@@) % إذا أنت لم تسعف جديدا بحاجة % فأنت إذا أخلقت بالرد أخلق % 3(@)(@@) % وقالت تأن القلب يعلق به الهوى % % ونعلم يقينا هل لحبك مصدق % % 4(@)(@@) % هنالك تؤتى كل نيل طلبته % وتفتح بابا كان دونك يغلق % % 5(@)(@@) % فقلت لها لم تبعدي غير أنه % % مبادرة الآفات ياحب أوثق % % 6(@)(@@) % أحاذر موتا فاجعا أو شييبة % % أفات بها أو ألفة تتفرق % % 7(@)(@@) % وأشياء شتى من قلى وملالة % ومن بدل يحلى بعين فيعشق % % 8(@)(@@) % فكيف ترجي أن يدوم وصالنا % % على حالة والدهر لونان أبلق % PageV01P3076 البحر : - 1(@)(@@) % قل لمن يملك رقي % سيدي قد حان عتقي % % 2(@)(@@) % أنت لي مولى ظلوم % لاتكافئني بعشقي % % 3(@)(@@) % غير أني بك صب % شهد الله بصدقي % % 4(@)(@@) % أيها القائل صبرا % طال بي صبري ورفقي % % 5(@)(@@) % جعل الله مليكي % % في جنان الخلد رزقي % % PageV01P3077 البحر : - 1(@)(@@) % له قلم يستتبع السيف طائعا % تطوع ذناباه التي لا تفارقه % 2(@)(@@) % وما ذنب الأقلام إلا ممثلا % بهن سيوف الهند كيف تطابقه % % PageV01P3078 البحر : - 1(@)(@@) % رأيت التقاط جنى نخلة % إذا ساقطته ولم ترقها % % 2(@)(@@) % أكن لكفك من شوكها % % وإن هي لم توفها حقها % % 3(@)(@@) % لقد أحسنت نخلة أنزلت % على كف ممتاحها رزقها % % 4(@)(@@) % وما جشمت كفه شوكها % % ولا جشمت رجله سحقها % % PageV01P3079 البحر : - 1(@)(@@) % أبا حسن خان ذاك النبي % % ذ عرق تفصد منه العروق % 2(@)(@@) % غدا وهو ترعف منه الأنو % % ف كرها وتشرق فيه الحلوق % 3(@)(@@) % وروحي تتوق إلى غيره % % وأنت إلى العرف عندي تتوق % % 4(@)(@@) % فصلني بدستيجة عذبة % فأني إليها مشوق مشوق % % 5(@)(@@) % أصلك بدستيجة مثلها % % من الخل تغلو وللخل سوق % % 6(@)(@@) % لابد منها وأنت الذي % % بصغرى أياديه تقضى الحقوق % PageV01P3080 البحر : - 1(@)(@@) % لست أبكي على نوال صديق % راعني بعد بره بالعقوق % % 2(@)(@@) % إنما أشتكي فساد وداد % حال مجناه من جفاف العروق % 3(@)(@@) % أحمد الخالق الذي لو رعاني % % لم يكل حاجتي إلى مخلوق % % 4(@)(@@) % صرت كلا على الصديق مصاغا % طالبا منه غير 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms709# مامرزوق % % 5(@)(@@) % تلك عندي مصيبتان ويكفي % % بعض إحداهما شجا في الحلوق % % 6(@)(@@) % يا أبا سهل الذي اعتد حقي % % ظالما من محقرات الحقوق % 7(@)(@@) % أنا بالله عائذ من عنوق % سمتني أخذهن من بعد نوق % 8(@)(@@) % سمتني الخسف والجفاء وغرب % % ت بذاك الجفاء بعد الشروق % % 9(@)(@@) % وتلونت لي وأخلفني نو % ؤك إلا تملقا ببروق % % 10(@)(@@) % إن هذا لحادث لم أخله % % في طروق الخطوب ذات الطروق % % PageV01P3081 11(@)(@@) % كم عدات نسختها بعدات % حل إنجازها من العيوق % % 12(@)(@@) % لاتصدق مقالة ابن خرخشا % % ذ فما عائب لكم بصدوق % % 13(@)(@@) % زعم الشيخ أن مولدك المي % % مون في الغدر غير ما مسبوق % % 14(@)(@@) % مولد فيه كوكب لك يحذي % % ك ملالا لكل إلف علوق % % 15(@)(@@) % ولما ريعت القلوب ولا لي % % عت بشيء كمبغض موموق % % PageV01P3082 البحر : - 1(@)(@@) % قد قلت بيتا لك تلقاءه % نادرة توجب إحناقي % % 2(@)(@@) % فلا تنادر قائلا عنده % % أخاف أن يحزن معناقي % % 3(@)(@@) % ضاق خناقي فالتمس قطعة % ولاتكن عونا لخناقي % % 4(@)(@@) % فما أخو ودي بتلعابة % يلعب بالنار لإحراقي % % 5(@)(@@) % يضحي إذا جاددته عابثا % والجد من خلقي وأخلاقي % % 6(@)(@@) % عندك ماء فأجز غصتي % % أو لا فإياك وإشراقي % % 7(@)(@@) % أمرضني عسري وقد خلتني % % عند مداواتك إفراقي % % PageV01P3083 البحر : - 1(@)(@@) % لا تكثرن ملامة العشاق % فكفاهم بالوجد والأشواق % 2(@)(@@) % إن البلاء يطاق غير مضاعف % فإذا تضاعف كان غير مطاق % 3(@)(@@) % أتلومهم للنفع أم لتزيدهم % % باللوم إقلاقا على إقلاق % 4(@)(@@) % ما للذي أضحى يلوم ذوي الهوى % % أمسى صريع مواقع الأحداق % % 5(@)(@@) % أنى يعنف كل معنوف به % % يثني يديه على حشا خفاق % 6(@)(@@) % تهدي الحمامة والغراب لقلبه % % شجوا بساق تارة وبغاق % % 7(@)(@@) % ويشوقه برق السحاب وإنما % % يعنى ببرق المبسم البراق % % 8(@)(@@) % متصعدا زفراته متحدرا % عبراته أبدا قريح مآقي % % 9(@)(@@) % لم يسق فوه من الثغور شفاءه % فلوجنتيه من المدامع ساقي % % 10(@)(@@) % يبكي الشجي بعبرة مهراقة % بل بالدماء على دم مهراق % % PageV01P3084 11(@)(@@) % تضحي أحبته تولى سفحه % % عند الفراق وعند كل تلاقي % % 12(@)(@@) % يجزونه طول الجفاء بأنه % % لم يخل من شغف مدر فواق % % 13(@)(@@) % شهد الوفاء وكل شيء صادق % أن الجزاء هناك غير وفاق % 14(@)(@@) % أصغت إلى العشاق أذني مرة % ومن الجميل تعاطف العشاق % % 15(@)(@@) % فشكا الشجي من الخلي ملامة % وشكى الوفي تلون المذاق % % 16(@)(@@) % فدع المحب من الملامة إنها % % بئس الدواء 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms710# لموجع مقلاق % % 17(@)(@@) % لاتطفئن جوى بلوم إنه % % كالريح تغري النار بالإحراق % % 18(@)(@@) % وأرى رقى العذال غير نوافع % لاسيما لمتيم مشتاق % % 19(@)(@@) % ما للمحب إذا تفاقم داؤه % غير الحبيب يزوره من راقي % % 20(@)(@@) % أخذ الإله لنا بثأر قلوبنا % % من مصميات للقلوب رشاق % PageV01P3085 21(@)(@@) % رقت مياه وجوههن لناظر % وقلوبهن عليه غير رقاق % 22(@)(@@) % هيف القدود إذا نهضن لملعب % وإذا مشين ثوادق الإيناق % % 23(@)(@@) % حرنت بهن روادف ممكورة % ومتونهن الغيد في إعناق % % 24(@)(@@) % يهززن أغصانا تباعد بالجنى % % وتروق بالإثمار والإيراق % % 25(@)(@@) % ومن البلية منظر ذو فتنة % نائي المنافع شاعف الإيناق % % 26(@)(@@) % ومن العجائب أن سمحنا للهوى % % بدمائنا وبخلن بالأرياق % % 27(@)(@@) % مزن يمطن الري عن أفواهنا % % ويجدن للأبصار بالإبراق % 28(@)(@@) % صيد حرمناه على إغراقنا % % في النزع والحرمان في الإغراق % % 29(@)(@@) % وأما ومن لو شاء ما خلق الهوى % % ولما ابتلى أصحابه بفراق % % 30(@)(@@) % مامن مزيد من بلية عاشق % وندى وخير في أبي إسحاق % % PageV01P3086 31(@)(@@) % لله إبراهيم واحد عصره % % ما أشبه الأخلاق بالأعراق % % 32(@)(@@) % أضحت فضائله تؤم به العلا % % وكأنهن إلى السماء مراقي % % 33(@)(@@) % لصفحت عن دهري به وذنوبه % % قد أوبقته أشدما إيباق % 34(@)(@@) % ملك له فطن دقاق في العلا % % تركته والأخلاق غير دقاق % 35(@)(@@) % يستعبد الأحرار إلا أنه % % يستعبد الأحرار بالإعتاق % % 36(@)(@@) % ومتى أصابك منه رق صنيعة % فكطوق زين لاكغل وثاق % 37(@)(@@) % يارب أسرى للخطوب أصابهم % % منه بإعتاق وباسترقاق % 38(@)(@@) % ولما تعمد رقهم لكنه % % لابد للمعروف من أرباق % % 39(@)(@@) % والرق في الإعتاق حكم للعلا % % حكمت به والأسر في الإطلاق % % 40(@)(@@) % رق الصنائع في الرقاب وأسرها % % مامنهما وأبيك إلا باقي % % PageV01P3087 41(@)(@@) % يامن يقبل كف كل ممخرق % هذا ابن أحمد غير ذي مخراق % % 42(@)(@@) % قبل أنامله فلسن أناملا % لكنهن مفاتح الأرزاق % % 43(@)(@@) % حظيت وفازت من أنامل سيد % نفع المسود فساد باستحقاق % % 44(@)(@@) % نفخاته ملك وفي تأميله % % روح القلوب ومسكة الأرماق % % 45(@)(@@) % وإلى ابن أحمد أرقلت بي ناقتي % % في كل أغبر قاتم الأعماق % % 46(@)(@@) % جبت الخروق بكل خرق ماجد % إن الخروق مسالك الأخراق % % 47(@)(@@) % نأتم أروع نهتدي بجبينه % % والله ضارب قبة ورواق % % 48(@)(@@) % كالبدر تم وكللته سعوده % % لازال شانئه هلال محاق % % 49(@)(@@) % قالت سعودي يوم فزت بقربه % % قسما لفزت بأنفس الأعلاق % % 50(@)(@@) % حر تذكره الخطوب خلاقة % في الحال تنسي الحر كل خلاق 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms711# % % PageV01P3088 51(@)(@@) % يلقي الرجال ثناؤه وعطاؤه % بذكاء رائحة وطيب مذاق % % 52(@)(@@) % خرق يعم ولا يخص بفضله % % لكنه كالغيث في الإطباق % % 53(@)(@@) % عفت مدائحه وعف فما ترى % % منكوحة إلا بخير صداق % % 54(@)(@@) % ألفيت عاذله يروض سماحه % ليعوق منه وليس بالمنعاق % 55(@)(@@) % شكرا بني حواء إن أخاكم % من خير ما رزقت يد الرزاق % % 56(@)(@@) % أضحى ابن أحمد ساح ماء سماحه % % فيه وماء شبابه الغيداق % % 57(@)(@@) % وأمد من ماء الحياء بثالث % صافي القرارة رائق الرقراق % % 58(@)(@@) % لله أمواه هناك ثلاثة % تغذى بهن مكارم الأخلاق % % 59(@)(@@) % أوفى بأعلى رتبة وتواضعت % آلاؤه فأحطن بالأعناق % 60(@)(@@) % كالشمس في كبد السماء محلها % % وشعاعها في سائر الآفاق % PageV01P3089 61(@)(@@) % بل كالسماء وكل مازينت به % % وكأرضها في قربه من لاقي % % 62(@)(@@) % يامن يسائل من له بكفائه % % من للسماء وأرضها بطباق % % 63(@)(@@) % آسى هنات مستشار خليفة % كافي شآم مستماح عراق % % 64(@)(@@) % مازال مشترك القرى في دهره % % بين الطوارق منه والطراق % % 65(@)(@@) % فقرى لطارقه يحل نطاقها % % من بعد ماشدت أشد نطاق % % 66(@)(@@) % وقرى يليه لطارق طلب القرى % % فجرى له بالعين والأوراق % % 67(@)(@@) % قسم الزمان على ضياء ساطع % وندى كمعروف السماء بعاق % % 68(@)(@@) % من لمحة بمشورة لمملك % % أو نفحة بجدى لذي إملاق % % 69(@)(@@) % فله إذا الأيام أشبه خيرها % % يوم الضعيفة صبحت بطلاق % 70(@)(@@) % يوم كيوم الصحو في إشراقه % % وغد كيوم الغيث في الإغداق % PageV01P3090 71(@)(@@) % لابل كلا يوميه يصبح فائزا % بمحامد الإغداق والإشراق % % 72(@)(@@) % ياقرب مستقياته لوروده % % يابعد أغوار هناك عماق % % 73(@)(@@) % قل للإمام إذ اجتباه لأمره % % ظفرت يداك بفاتق رتاق % % 74(@)(@@) % مفتاح رأي حين يغلق بابه % % مغلاق شر أيما مغلاق % % 75(@)(@@) % متوقد الحركات تحسب أمره % لمعان برق أو حفيف براق % % 76(@)(@@) % فإذا تفرد للخطوب بفكره % % فله سكينة حية مطراق % % 77(@)(@@) % وإذا التقى أمر الوزير وأمره % سدا طريق الحادث المنباق % % 78(@)(@@) % شهد الخليفة إذ أعانا بأسه % أن النصال تعان بالأفواق % % 79(@)(@@) % إني رأيتك يابن أحمد سيدا % % فينا بحق واجب وحقاق % % 80(@)(@@) % لاحظت رفدك عند إرفاد الورى % % فرأيته كاليم عند سواقي % % PageV01P3091 81(@)(@@) % جادوا وجدت فأحدقت بثمادهم % % غمرات بحرك أيما إحداق % % 82(@)(@@) % فتزاجروا عن غيهم وتصارحوا % % نصحا جلا الشبهات بعد ملاق % % 83(@)(@@) % ورأيت رأيك بين آراء العدا % % كالسيف بين جماجم أفلاق % % 84(@)(@@) % كادوا وكدت فأزهقت مادبروا % % إحدى هناتك أيما إزهاق % % 85(@)(@@) % أرهقتهم 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms712# قدر البوار بقوة % وهبت لرأيك أوشك الإرهاق % 86(@)(@@) % ما للدهاة لدى محالك موئل % لافي سلالمهم ولا الأنفاق % 87(@)(@@) % أنت الذي كبح المكائد كيده % حتى ركضن دوامي الأشداق % 88(@)(@@) % لله درك من مضر مرفق % متأله الإضرار والإرفاق % % 89(@)(@@) % كم ظل يوم ممطر لك مصعق % متحمد الإمطار والإصعاق % % 90(@)(@@) % لبست محاسنك المحامد إنها % % نظرت فلم تر غيرها من واقي % % PageV01P3092 91(@)(@@) % خذها شرودا في البلاد مقيمة % سمرا لذي سمر وزاد رفاق % % 92(@)(@@) % أنت الذي ماقال فيه مقرظ % قولا فأسلمه بلا مصداق % % 93(@)(@@) % أنت الذي للوعد منه وعنده % % سبق وللإنجاز وشك لحاق % % 94(@)(@@) % من ذا يعد الحمد غيرك مغنما % ويرى المواهب أفضل الإنفاق % % 95(@)(@@) % من ذا يعد النفل فرضا واجبا % أو يجعل الميعاد كالميثاق % % 96(@)(@@) % يفديك من يثني عليه صديقه % بعبوس كبر وابتسام نفاق % % 97(@)(@@) % يامن يجود لدى السؤال بطرفه % ولدى النوال بأحسن الإطراق % % 98(@)(@@) % يامن صفت لي في ذراه شرائعي % % حتى تركت تتبع الأرزاق % % 99(@)(@@) % أضحى المديح يساق نحوك إنه % % يلفى ببابك نافق الأسواق % % 100(@)(@@) % فالبسه مالبس الحمام حلبه % في الأيك من وشح ومن أطواق % % PageV01P3093 101(@)(@@) % وعمرت ماعمرت مكارمك التي % % تبلى ثياب الدهر وهي بواقي % % 102(@)(@@) % واسلم أبا إسحاق لابس غبطة % وعداك للإبعاد والإسحاق % % PageV01P3094 البحر : - 1(@)(@@) % أيها البيهقي أحسنت في شعر % % ك إحسان ذي طباع وحذق % 2(@)(@@) % قرط الله بظر أمك بالدر % % ر فقد أنجبت بشاعر صدق % PageV01P3095 البحر : - 1(@)(@@) % لم يزل قلبه إليهم مشوقا % % ثم أضحى لديهم معلوقا % % 2(@)(@@) % بان قلبي فشاقني وجدير % حق للقلب بائنا أن يشوقا % % 3(@)(@@) % يا فتى بان قلبه وهو ثاو % قل لحاديك قد أنى أن تسوقا % % 4(@)(@@) % جل مقدار ما نأى عنك فارحل % % عرمسا تترك الحصى مدقوقا % % 5(@)(@@) % فاطلب القلب والذين سبوه % عائقا كل عائق أن يعوقا % % 6(@)(@@) % لم تدعني حبائل الشادن الأك % % حل حتى نشبت فيها نشوقا % % 7(@)(@@) % علقتني حبالة منه ما انفك % ك فيها بنبله مرشوقا % % 8(@)(@@) % أحلال أن يحزق الصيد صبرا % من رأى في حباله محزوقا % % 9(@)(@@) % طالب الله مقلتيه السحوري % % ن بحقي وقده الممشوقا % % 10(@)(@@) % منع العين قرة العين أن تل % % تذ طعم الرقاد بل أن تذوقا % % PageV01P3096 11(@)(@@) % ما أنى مسعدا حماما سجوعا % فيه أو زاجرا غرابا نعوقا % % 12(@)(@@) % ويك ياعائب الحبيب لتسلى % % عنه مهلا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms713# طلبت أحوى عقوقا % % 13(@)(@@) % بأبينا حديث من عبت مسمو % % عا وبالنفس وجهه مرموقا % % 14(@)(@@) % قد رضينا الحبيب لوكان مر % ضيا لدينا بعهده موثوقا % % 15(@)(@@) % أيها الذائق الممرات صبرا % إن شهدا في إثرها ملعوقا % % 16(@)(@@) % آل نوبخت ليس يعدم راجي % % كم صبوحا من رفدكم وغبوقا % % 17(@)(@@) % كم نوال لكم بكور طروق % % قد كفى نوبة بكورا طروقا % % 18(@)(@@) % رب واد أحل من بعد إحرا % % م فأضحى عفاؤه محلوقا % % 19(@)(@@) % جدتم جودة فأصبح رائي % % ه بآثارها عليه مروقا % % 20(@)(@@) % طفقت تمطر العفاة سماء % من جداكم فما أساءت طفوقا % % PageV01P3097 21(@)(@@) % حسبكم ويب غيركم قد تركتم % % كل حر بفعلكم مرقوما % % 22(@)(@@) % أي جيد ترونه ليس يمسي % % في عري عارفاتكم مربوقا % % 23(@)(@@) % وإذا ماجريتم في مدى الحك % % مة خلفتم الطلوب اللحوقا % % 24(@)(@@) % وتقاسون بالسراة ومازل % % تم تفوقون فائقا لامفوقا % % 25(@)(@@) % فتكونون للوجوه أنوفا % وتكونون للرؤوس فروقا % % 26(@)(@@) % قد وسطتم وفقتم وتقدم % تم فأنذرت حاسدا أن يموقا % % 27(@)(@@) % لاتلجن في معاندة الحق % ق فتعتد جاهلا مألوقا % % 28(@)(@@) % كم عدو لكم غدا يجتديكم % % ولقد بات نابه محروقا % % 29(@)(@@) % فاجتدى نخلة قريبا جناها % % قد أنافت على النخيل بسوقا % % 30(@)(@@) % لايراها أشاءة من يسامي % % ها ولا من بغى جناها سحوقا % % PageV01P3098 31(@)(@@) % أيها الطالبون خيرا وشرا % إن شوكا فيها وإن عذوقا % % 32(@)(@@) % لاتزل عين شانيء تتقذا % % كم معورا إنسانها مبخوقا % % 33(@)(@@) % ووقاكم به الإله ولقا % % ه من الجائحات حدا حلوقا % % 34(@)(@@) % لم أقل إذ صحبتكم بعد أقوا % % م تبدلت بعد نوق عنوقا % % 35(@)(@@) % يحذق الناس ماتعاطوا وما أح % % سب مدحا في مثلكم محذوقا % % 36(@)(@@) % يا أبا سهل الذي راع في السؤ % % دد لا لاحقا ولاملحوقا % % 37(@)(@@) % بل سبوقا إلى البعيد من الغايا % % ت عند الجراء لامسبوقا % % 38(@)(@@) % والذي أبصر السحاب عطايا % % ه فأضحى يشيم منه البروقا % % 39(@)(@@) % ورآه العيوق في فلك المج % % د فأمسى يخاله العيوقا % % 40(@)(@@) % والذي يبهر البدور ببدر % لايرى كاسفا ولاممحوقا % % PageV01P3099 41(@)(@@) % وإذا رامه عدو رآه % % جبلا فوق رأسه منتوقا % % 42(@)(@@) % وإذا امتاحه ولي رآه % % عارضا واهي الكلى معقوقا % % 43(@)(@@) % وإذا الخصم لبس الحق بالبا % % طل كان المميز الفاروقا % % 44(@)(@@) % مالقينا مثل البثوق اللواتي % % منحت منك بعد بر عقوقا % % 45(@)(@@) % لاقصورا من الكرامة عنا % % غير أن اللقاء أضحى معوقا % % 46(@)(@@) % تركت لي 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms714# حشا عليك خفوقا % % وفؤادا إليك صبا مشوقا % % 47(@)(@@) % عجبا من خليفة وأمير % كلفا البحر أن يسد البثوقا % % 48(@)(@@) % كيف يرجى لسد بثق جواد % لم يزل ماء جوده مبثوقا % % 49(@)(@@) % أريحي تخاف بائقة الطوفا % % ن من بطن كفه أن تبوقا % % 50(@)(@@) % ولي السد وهو أقوم بالفت % % ح وإن كان قد يسد الفتوقا % % PageV01P3100 51(@)(@@) % وجدير شرواه أن يرتق المف % % توق طورا ويفتق المرتوقا % % 52(@)(@@) % شق بحرا من البحار وأرسى % % جبلا شامخا يفوق الأنوقا % % 53(@)(@@) % هز للماء هذمة كعصا مو % % سى فأضحى عموده مفروقا % % 54(@)(@@) % بين فرقيه برزخ مثل رضوى % % عفق البثق فانتهى معفوقا % % 55(@)(@@) % وثنى النيل نحو مسلكه الأر % شد لما اعتدى وجار فسوقا % % 56(@)(@@) % يابن نوبخت وابن أبنائه الصي % % د كذا تشبه الغصون العروقا % % 57(@)(@@) % لاعدمناك حولا قلبيا % % مخلطا مزيلا فتوقا رتوقا % % 58(@)(@@) % لتقلدت حفر اسناءة الني % % ل كميشا تخال سيفا دلوقا % % 59(@)(@@) % تسبق الفجر بالغدو عيها % % ثم لاتستفيق إلا غسوقا % % 60(@)(@@) % لازما بطنها تراها قناة % وترى طينها هناك خلوقا % % PageV01P3101 61(@)(@@) % وترى السافيات تجري بها الأر % % واح مسكا يذرونه مسحوقا % % 62(@)(@@) % كم حلوق بللتها قد أفاءت % % لك ذكرا في الناس يشجي الحلوقا % % 63(@)(@@) % كان مما حدثت ضيفك أن قل % % ت وقد حل في ذراك طروقا % % 64(@)(@@) % لو ترانا في بطن إسناية الني % % ل لأبصرت هاربا مرهوقا % % 65(@)(@@) % هاربا من مغوثة كم أغاثت % % من لهيف ونفست مخنوقا % % 66(@)(@@) % تقدم الماء وهو يتبعنا في % % ها مخلى سبيله مدفوقا % % 67(@)(@@) % كلما استقبلته فيها صعودا % % ء شققنا له هناك شقوقا % % 68(@)(@@) % فإذا ما احزأل فيها نجونا % % منه عدوا فلا يسيء اللحوقا % % 69(@)(@@) % والمساحي تسوقه نحو مجرا % % ه فيا حسنه هناك مسوقا % % 70(@)(@@) % عجبا أن تفر منه وقد حم % % مل من ميرة الحياة وسوقا % % PageV01P3102 71(@)(@@) % بل لتطريقنا له وهو المه % % روب منه ولم يكن ذاك موقا % % 72(@)(@@) % دأبنا ذاك سائر اليوم حتى % % ملأ الماء بطنها المشقوقا % % 73(@)(@@) % لو تراها وقد تسامت ذراها % % خلت أمواجها جمالا ونوقا % % 74(@)(@@) % صنع وال يمسي ويصبح مصبو % % حا بإتعاب جسمه مغبوقا % % 75(@)(@@) % وهب النفس للعلا فجزته % رتبة تفرع النجوم سموقا % % 76(@)(@@) % يا أبا سهل الذي راق مرئي % % ا وطاب المخبور منه مذوقا % % 77(@)(@@) % لم تزل مبدئا معيد الفضل % وبما أنت فاعل محقوقا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms715# % % 78(@)(@@) % لا عجيب صفاء ودك للخل % % ل إذا كان خيمك الراووقا % % 79(@)(@@) % مثل ذاك الطباع صفي من الأق % % ذاء مستأثرا بذاك سبوقا % % 80(@)(@@) % قد قرأنا كتابك الحسن النظ % % م فخلناه لؤلؤا منسوقا % % PageV01P3103 81(@)(@@) % ووقفنا على خطابك إيا % % ي فأصبحت وامقا موموقا % % 82(@)(@@) % وبأني معشوق نفسك لا تض % حي وتمسي إلا إلي مشوقا % % 83(@)(@@) % فرأينا تطولا وسمعنا % % منطقا مونقا كوجهك روقا % % 84(@)(@@) % إن تكن عاشقا لعبدك تعشق % عاشقا لم تزل له معشوقا % % 85(@)(@@) % ولأنت المحقوق بالعشق لا المر % % زوق لكن إخالني المرزوقا % % 86(@)(@@) % غير أني إذا تأملت إخلا % % صك ودي أهلتني أن أروقا % % 87(@)(@@) % أنا من إن عشقته فلود % خالص منه لم يكن ممذوقا % % 88(@)(@@) % وكأني وقد طويت إليك النا % % س جاوزت نحو ماء خروقا % % 89(@)(@@) % ولعمري لقد وردتك عذبا % لاجوى آجنا ولا مطروقا % % 90(@)(@@) % دائم العهد لا ينقلك الغد % % ر إذا خيل بعضهم زاووقا % % PageV01P3104 91(@)(@@) % إن تكن جاحدا لنعماك عندي % % لاتجدني لها كفورا سروقا % % 92(@)(@@) % تلك شمس لها لديك غروب % وتلاقي لها لدي شروقا % % 93(@)(@@) % إن هذا من الأمور لبدع % حين ترعي الأمور عينا رموقا % % 94(@)(@@) % شرق شمس فيه تغيب وغرب % فيه تبدي صباحها المفتوقا % % 95(@)(@@) % أنت من راشني أثيث رياشي % % وكسا اللحم عظمي المعروقا % % 96(@)(@@) % واتقاني بحق سلطان ودي % % قسمة ماذممتها وطسوقا % % 97(@)(@@) % مجريا ذاك سنة لي ما دا % % م نهار لليله موسوقا % % 98(@)(@@) % ولما كنت مستودع الما % % ء سقاء مهزما مخروقا % % 99(@)(@@) % لا ولا مثل زارع في سباخ % غادرت جل زرعه ماروقا % % 100(@)(@@) % أنا ممن يستقرض العرف مف % % عولا ويقضي أضعافه منطوقا % % PageV01P3105 101(@)(@@) % ورأيناك لاتقاضي إذا أق % % رضت قرضا إلا لسانا نطوقا % % 102(@)(@@) % بل وجدناك لامريغا جزاء % بل إلى البذل لا سواه تؤوقا % % 103(@)(@@) % حاش لله لم تكن عند إفضا % % ل إلى غير ذاته لتتوقا % % 104(@)(@@) % يا مهانا تلاده كل هون % متحفى بضيفه مرفوقا % % 105(@)(@@) % سالما عرضه وإن بات بالأل % % سن من عاذلاته مسلوقا % % 106(@)(@@) % نصب وفدين ركب ماء وطورا % ركب ظهر يعول سباسب خوقا % % 107(@)(@@) % لاكمن أعتب العواذل مذمو % % ما فأضحى أديمه ممزوقا % % 108(@)(@@) % كم وعيد أخلفت لو حق أمسى % % من أصابت سماؤه مصعوقا % % 109(@)(@@) % وعدات أنجزت عفوا وحاشى % % عدة منك أن تشوك بروقا % % 110(@)(@@) % ياسمي الصدوق في الوعد إس 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms716# % % ماعيل أنى يكون إلا صدوقا % % PageV01P3106 111(@)(@@) % ورعا أن تقارف البخل كفا % % ك وهيهات أن تلاقي فروقا % % 112(@)(@@) % رابط الجأش في الخطوب وماتع % % دم قلبا من خوف ذم خفوقا % % 113(@)(@@) % تركب السيف في المعالي ولكن % تتقي شفرة اللسان العروقا % % 114(@)(@@) % وتشيم الأمور غير مضاه % راعي الثلة النؤوم النعوقا % % 115(@)(@@) % قد بلونا يوميك يابن علي % فحمدنا المغيوم والمطلوقا % % 116(@)(@@) % يومك الحاتمي والتارك الخص % % م مزلا مقامه زحلوقا % % 117(@)(@@) % لك يوم من الندى ذو سماء % لم تزل ثرة الفروغ دفوقا % % 118(@)(@@) % شفع يوم من الحجى ذي حجاج % تدع الشبهة الثبوت زلوقا % % 119(@)(@@) % تنتحي مقتل الخصيم وقورا % لاخفيفا عند الخفوف نزوقا % % 120(@)(@@) % منطقيا تصرف الجنس والفص % % ل وما ولدا جموعا فروقا % % PageV01P3107 121(@)(@@) % بار حمد الرجال بين ملوك الن % ناس حتى أقمت للحمد سوقا % % 122(@)(@@) % وغدا الشعر في فنائك مبرو % % را وقد كان برهة معقوقا % % 123(@)(@@) % فابق يفديك من يفي بك مف % ديا ومن ليس عادلا ثفروقا % % 124(@)(@@) % إن تقدم منافسيك فلن يذ % % كر للنصل إن تقدم فوقا % % 125(@)(@@) % غير ماطاعن على من يسامي % % ك ولكن لفائق أن يفوقا % % 126(@)(@@) % لو مدحناك بالمديح الذي قد قي % % ل في الناس لم يكن مسروقا % % 127(@)(@@) % ولكنا في ما فعلناه كالحكا % % م ردوا على محق حقوقا % % 128(@)(@@) % مدح الأولون قوما بأخلا % % قك من قبل أن ترى مخلوقا % % 129(@)(@@) % نحلوهم ذخائرا لك بالبا % % طل منقيلهم وكان زهوقا % % 130(@)(@@) % فانتزعنا الغصوب من غاصبيها % % فحبا صادق بها مصدوقا % % PageV01P3108 البحر : - 1(@)(@@) % طلع الرقي في شاشية % وعليه سيفه والمنطقه % 2(@)(@@) % فبدا للناس منه منظر % عجب سبحان رب خلقه % 3(@)(@@) % إن إكن أبصرت شخصا مثله % % فثيابي في الجوالي صدقه % PageV01P3109 البحر : - 1(@)(@@) % قولا لذات الركب المحلوق % هل لك في أير عظيم الحوق % 2(@)(@@) % أنعظ من بلبلة الإبريق % . . . . . . . . . . . . . . . . . . . . % PageV01P3110 البحر : - 1(@)(@@) % كان أناس يرون أني في ال % % آداب صفو ماشابه رنق % 2(@)(@@) % وكان لي بينهم وعندهم % مضطرب واسع ومرتفق % 3(@)(@@) % حتى إذا ما صحبتكم نظروا % % وأنتم منتلاحظ الحدق % 4(@)(@@) % فقلدوا رأيكم فزهدهم % في فعلقي لديهم خلق % % 5(@)(@@) % رجوت منكم حيا فأخلفني % % كلا ولكن أصابني صعق % % PageV01P3111 البحر : - 1(@)(@@) % يا سليمان ظماء % قطعت عنك السواقي % % 2(@)(@@) % شخت فأذن بفراق % وتجهز لانطلاق % % 3(@)(@@) % بنت عني بطلاق % وطلاق وطلاق % 4(@)(@@) % فرطت فيك ثلاث % آخذات بالخناق 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms717# % 5(@)(@@) % فالبس اليأس من الرج % عى وطالب بالصداق % % 6(@)(@@) % نحن قوم مالدينا % % للمولي من خلاق % % 7(@)(@@) % نأكل اللحم ونرمي % % بكراديس العراق % % 8(@)(@@) % ماعلينا بعد شرب ال % % خمر من طرح الزقاق % % 9(@)(@@) % قد تبدلنا بك المر % % د فدع باب النفاق % % 10(@)(@@) % وفتنا ببدور % منهم ذات اتساق % % PageV01P3112 11(@)(@@) % وشغفنا بغصون % منهم هيف رشاق % % 12(@)(@@) % فاترك الركض وسلم % ذاك للخيل العتاق % % 13(@)(@@) % أنت راض حين تجري % % بعد سبق بلحاق % 14(@)(@@) % فاصطبر ياحب نفسي % % كل بدر لمحاق % 15(@)(@@) % ومتى خانك صبر % فاجتلب ماء المآقي % % 16(@)(@@) % وابك أيام حياة % أنت منها في سباق % % 17(@)(@@) % قد مشقنا في قراطي % % سك هاتيك الرقاق % % 18(@)(@@) % وسبقنا في ميادي % % نك أصحاب السباق % % 19(@)(@@) % كم سقاني فوك من ري % % قك بالكأس الدهاق % % 20(@)(@@) % ربما التفت إلى الصب % % ح لنا ساق بساق % PageV01P3113 21(@)(@@) % في نقاب من لثام % وإزار من عناق % % 22(@)(@@) % ذهبت نضرة خدي % % ك وما شيء بباقي % % 23(@)(@@) % فالزم المنقاش واعلم % أنه دهر ارتفاق % % 24(@)(@@) % ليس من دائك هذا % % غير طول النتف راقي % % 25(@)(@@) % أين سلطان عزيز % لك في أرض العراق % % 26(@)(@@) % كنت في ملك من المر % % دة مرهوب الشقاق % 27(@)(@@) % قد محاجورك فيه % % كل حق وحقاق % 28(@)(@@) % لم يكن ملكك يرضي % % ملك السبع الطباق % % 29(@)(@@) % فرماه بزوال % أودهاه بانفتاق % % 30(@)(@@) % هربت منك المودا % % ت على ظهر البراق % % PageV01P3114 31(@)(@@) % فاسل عنا قد سقانا % % عنك بالسلوة ساقي % % 32(@)(@@) % كنت شيئا فتلاشي % % ت وماشيء بباقي % % 33(@)(@@) % فوردنا منك عذبا % وصدرنا عن زعاق % % 34(@)(@@) % كنت عقا بالمحبي % % ن فعقتك عقاق % % 35(@)(@@) % فاله عما فات منه % % ما إلى النجم مراقي % % 36(@)(@@) % لن ترى موقف مستع % % د على حر اشتياق % % 37(@)(@@) % لا ولا نفس محب % ترتقي بين التراقي % % 38(@)(@@) % فك مأسورك ذو القد % % رة من ذاك الوثاق % 39(@)(@@) % لم يدع منه عذارا % % ك هوى غير اختلاق % % 40(@)(@@) % ذق عقاب العذر واعلم % % أنه غير مطاق % % PageV01P3115 41(@)(@@) % قد أكلناك لذيذا % طيبا حلو المذاق % % 42(@)(@@) % ولفظناك كريها % غير مكروه الفراق % % 43(@)(@@) % خير أحوالك أن تس % لم من داء الحلاق % % PageV01P3116 البحر : - 1(@)(@@) % أخالقي رب ورب رازقي % % مارازقي تالله إلا خالقي % % 2(@)(@@) % فلا تشوه خلتي خلائقي % % ولايعوج طمعي طرائقي % % PageV01P3117 البحر : - 1(@)(@@) % قد حلفنا على الصفاء جميعا % فاجتهدنا وذاك جهد المطبق % 2(@)(@@) % فبأي الأحكام توجب تصدي % % قك حتما ولا ترى تصديقي % % 3(@)(@@) % وبأي الأحكام قولك 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms718# برها % % ن وقولي من خلبات البروق % 4(@)(@@) % ليس في العدل أن تحكم في قو % % لك فارجع إلى سواء الطريق % 5(@)(@@) % مامن الدعوتين إن ضفت دعوى % % غير محتاجة إلى تحقيق % % 6(@)(@@) % ولنا إن رددت ما تدعيه % % رد ماتدعيه ضيقا بضيق % % 7(@)(@@) % ووصفت الذي يحق على الإخ % % وان من رعيهم ذمام الصديق % % 8(@)(@@) % ورأيت النفوس أيسر من خذ % ل صديق عند احتضار الحقوق % % 9(@)(@@) % ولعمري لقد صدقت ولوقد % % خيض من دونه أجيج الحريق % % 10(@)(@@) % غير أن الطباع تستتبع المط % % بوع في كل فسحة ومضيق % % PageV01P3118 11(@)(@@) % حشمتي خلقة ولي من الخل % % قة أن تستقيد للمخلوق % % PageV01P3119 البحر : - 1(@)(@@) % أغثنا فأنت المرء يهتف باسمه % % إذا الأمر أضحى آخذا بالمخنق % 2(@)(@@) % ولا تمطل الغصان بالماء إنه % % متى يمطل الغصان بالماء يزهق % 3(@)(@@) % تكذب أقوام علينا وأعلقوا % % مخالبهم في لحمنا كل معلق % % 4(@)(@@) % وصدقهم من قد عرفت مكانه % % فمزق منا الشلو كل ممزق % % 5(@)(@@) % نحن بحال تذكر المرء فرضه % لدى كل واري الزند مثلك معرق % % 6(@)(@@) % فلا يسبقنك السابقون بكشفها % % فما زلت بالخيرات غير مسبق % % 7(@)(@@) % ومالي من قرض لديك أعده % % ولكن متى يحمله طولك يلحق % % 8(@)(@@) % نعائي إليك النفس إن لم تلافها % % فقد جعلت بين الحيازم ترتقي % % PageV01P3120 البحر : - 1(@)(@@) % أنا راع لما صفا منك قدما % عائف منك آجنا مطروقا % % 2(@)(@@) % فانس ذكري فإن قلبي ناس % لك ماعاقب الغروب الشروقا % % 3(@)(@@) % كن كأن لم تلاقني قط في النا % % س ولاتجعلن ذكراي سوقا % % 4(@)(@@) % وتيقن بأنني غير راء % لك حقا حتى ترى لي حقوقا % % 5(@)(@@) % وبأني مفوق ألف فوق % لك إن فوقت يمينك فوقا % % PageV01P3121 البحر : - 1(@)(@@) % غموض الحق حين تذب عنه % % يقلل ناصر الخصم المحق % 2(@)(@@) % تضل عن الدقيق عقول قوم % فتحكم للمجل على المدق % 3(@)(@@) % وعند الله خالق كل شيء % تميز كل ذي كذب وصدق % 4(@)(@@) % وماينفك لي أبدا خصوم % أقابل منهم خرقا برفق % % PageV01P3122 البحر : - 1(@)(@@) % لايبعدن شبابك الغرنيق % أيام منظره عليك أنيق % 2(@)(@@) % سقيا لأزمان مضت أيامها % % بيضا كأن غروبهن شروق % % 3(@)(@@) % إذ للشبيبة صبوة تصبى بها % % وبشاشة يصبى بها وتروق % 4(@)(@@) % يهتز فيك لأريحيات الصبا % % غصن تفيأه الظباء وريق % 5(@)(@@) % هيهات أيتها الكواعب كالدمى % % مالي بكن مع المشيب صديق % 6(@)(@@) % مني عليكن السلام تحية % إن الشباب 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms719# هراقه مهريق % 7(@)(@@) % لم تجمع الأيام شمل أحبة % إلا وشرط صروفها التفريق % % 8(@)(@@) % يا آل طاهر المطهر كاسمه % % إن اللسان بمدحكم لطليق % 9(@)(@@) % إن ينسني عصر الشباب وعهده % % عصر فعصركم لذاك خليق % % 10(@)(@@) % قد قلت للدهر الملح بصرفه % % لما اعتصمت بحبلكم ستفيق % % PageV01P3123 11(@)(@@) % أمسى مجاوركم يحل فعهدكم % % ما للخطوب بها عليه طريق % 12(@)(@@) % من خان أو نكث العهود فعهدكم % % عهد أمر على الوفاء وثيق % 13(@)(@@) % وكأن وعدكم تقيل عهدكم % % فلقاحه بنتاجه مرهوق % 14(@)(@@) % لتعذ بسيبكم المطامع والمنى % % فعليكم لعداتها التصديق % % 15(@)(@@) % ما زلتم ترقون في درج العلى % % حتى أشار إليكم العيوق % % 16(@)(@@) % مهما سرقت عن الأوائل فيكم % فلغير باع بالمديح يضيق % % 17(@)(@@) % لكنهم نحلوا سواكم مجدكم % % فرددت حقكم وذاك حقيق % % 18(@)(@@) % ما المدح مسروق لكم من غيركم % % بل منكم في غيركم مسروق % % PageV01P3124 البحر : - 1(@)(@@) % علاك قناع المشيب اليقق % وثوب المشيب جديد خلق % 2(@)(@@) % علاك فأبرق إبراقة % تراع لها ظبيات البرق % 3(@)(@@) % وأنى تراع بما أومنت % به من حبالك ذات العلق % 4(@)(@@) % ومن نبلك المرسلات التي % % صوائبها في الرمايا نسق % % 5(@)(@@) % بلى في المشيب لها رائع % وإن هو أطفأ فيها الحرق % 6(@)(@@) % وشرخ الشباب وإن صادها % % أحب إليها لذاك الأنق % 7(@)(@@) % أعاذلتي إن بكيت الشبا % % ب إني لم أبك ثوبا سحق % 8(@)(@@) % لقد علم الدهر أن الشبا % % ب ثوب لدى الناس لا كالخرق % % 9(@)(@@) % لذاك يدب خفيا له % % فيسلبه سلبا لا كالسرق % % 10(@)(@@) % ولو كان يسلبه جهرة % للاقى القنا دونه والدرق % % PageV01P3125 11(@)(@@) % وحق له مع إقدامه % إذا ابتز مثل الشباب الفرق % % 12(@)(@@) % رعانا الأمير أبو أحمد % فأرعى المريع وأسقى الغدق % % 13(@)(@@) % وضم الشتيت ولم الجمي % % ع وانتظم الشمل حتى اتفق % % 14(@)(@@) % وأغنى الفقير وحاط الغني % ي مالم يحط والد ذو شفق % 15(@)(@@) % عبيد الإله بن عبد الإله % % ه خير الملوك وخير السوق % 16(@)(@@) % فأضحى وأمسى وقد أجمعت % % عليه بأهوائهن الفرق % % 17(@)(@@) % وظلوا وباتوا به آمني % % ن في ظل عيش أثيث الورق % % 18(@)(@@) % لياليهم مثل أيامهم % ضياء وأنسا وما من أرق % % 19(@)(@@) % وايامهم كلياليهم % سكونا وروحا ومامن غسق % % 20(@)(@@) % يداه يمينان لكنه % % إذا شاء عل الظبا بالعلق % PageV01P3126 21(@)(@@) % وطورا شمالان لكنه % % إذا شاء سح الندى فانبعق % 22(@)(@@) % مهيب إذا سار في جيشه % % وقد لاح كوكبه فائتلق 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms720# % % 23(@)(@@) % أشارت إليه قلوب الورى % % وكف البنان وغض الحدق % % 24(@)(@@) % بلا سبب فالتمس رفده % % فإنك تقرب ماء رفق % 25(@)(@@) % وهل يستعد الرشاء امرؤ % لورد الفرات إذا ما فهق % 26(@)(@@) % ألا فارجه واخشه إنه % % هو البحر وفيه الغنى والغرق % 27(@)(@@) % ألا فارجه واخشه إنه % % هو الغيث فيه الحيا والصعق % 28(@)(@@) % مضر بملتمس ضره % % وفيه لمرتفق مرتفق % % 29(@)(@@) % هو السيف إن أنت أنحيته % % لرأسك أو رأس قرن فلق % % 30(@)(@@) % هو الماء فاشربه ذا غلة % وذا غصة وتوق الشرق % % PageV01P3127 31(@)(@@) % هو النار فاصطلها واستضئ % بها في الدجى وتوق الحرق % % 32(@)(@@) % إذا ماوعى مدحه المادحو % % ن طاب نسيمهم والعرق % % 33(@)(@@) % فتنشر أرواحهم نشرة % ومامنهم ذو لسان نطق % % 34(@)(@@) % فإن أنشدوا مدحه غادروا % % من المسك في كل شيء عبق % % 35(@)(@@) % إذا كذب الناس أوكذبوا % % لدى القول والفعل يوما صدق % 36(@)(@@) % وحلم يوازن مثقاله % % جبال الشرى وجبال السلق % 37(@)(@@) % به يجمع الملك أشتاته % إذا ماعصا الناس طارت شقق % % 38(@)(@@) % يباشر شوك القنا حاسرا % ويلبس دون اللسان الحلق % % 39(@)(@@) % إذا بت والفكر تستخرجا % % ن مفتاح أمر عسير الغلق % % 40(@)(@@) % وأنت لأمر العلا مؤثر % على كل ناعمة المعتنق % PageV01P3128 41(@)(@@) % وأبدى لك الصبح عن واضح % % ين رأيك منبلجا والفلق % 42(@)(@@) % فلله صبحك ماذا جلا % % ولله ليلك ماذا وسق % % 43(@)(@@) % وإما أجرت من الحادثا % % ت جارا فليس عليه رهق % % 44(@)(@@) % يرى الدهر جارك في شاهق % تأزر من لجة وانطلق % % 45(@)(@@) % وقد علقت قبضتاه عرى % % بها عصم الله تلك الوثق % % 46(@)(@@) % فهل من سبيل إلى مثله % % أبى الله ذاك على من خلق % % 47(@)(@@) % فدونكها يابن سيف الملو % % ك لهو المجالس زاد الرفق % % PageV01P3129 البحر : - 1(@)(@@) % سبقت إلي صنيعة من محسن % وأراك تأنف أن تكون اللاحقا % % 2(@)(@@) % وإذا جمعت إلى اللحاق محبة % للسبق بالإحسان كنت السابقا % % 3(@)(@@) % ماقدر ماتجدي عليك بطالتي % % قدر تبيع به لسانا ناطقا % % 4(@)(@@) % إن لم تكن في فعل خير قائدا % فاطلب بجهدك أن تكون السائقا % % PageV01P3130 البحر : - 1(@)(@@) % قل للسفيه شنيف % دعني وعاد بليقا % % 2(@)(@@) % أخاك ذاك المراعي % % خوينا أو طبيقا % % 3(@)(@@) % يامن حسبناه بدءا % علقا فكان عليقا % % 4(@)(@@) % لم يجعل الله فضلا % % شاركتني فيه ضيقا % % 5(@)(@@) % بل واسعا لا كرزق % يدعوه داع رزيقا % % 6(@)(@@) % فلم تكالبت فيه % % يا مشحذيا خليقا % % 7(@)(@@) % لكن رضعت عريقا % % للؤم 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms721# ساء عريقا % % 8(@)(@@) % صبرا لصوب سحاب % قد شمت منه بريقا % % 9(@)(@@) % لقيت أم ربيق % وسوف تلقى ربيقا % % 10(@)(@@) % فاستنجدن طوينا % ومكسبا وزريقا % % PageV01P3131 11(@)(@@) % أقران ظهرك أو فاب % % غ من حذارى نفيقا % % 12(@)(@@) % بل قد أقمت بذكري % % ك ياشنيف سويقا % % PageV01P3132 البحر : - 1(@)(@@) % مستبعد هيهات إعتاقه % مستأسر يعسر إطلاقه % 2(@)(@@) % صب رقيق القلب خفاقه % عناه فظ القلب خفاقه % 3(@)(@@) % محبب قلل إحسانه % % جدا وإن كثر عشاقه % 4(@)(@@) % لدن من الأغصان في روضة % من نرجس تنظر أحداقه % % 5(@)(@@) % يحسن في التجريد إثماره % وفي الشفوف الخضر إيراقه % 6(@)(@@) % فاقت دجى الليل دجى فرعه % وفاق ضوء الصبح إشراقه % % 7(@)(@@) % أخلق إذا جرد رمانه % في العين أن يكثر رماقه % % 8(@)(@@) % وهو المنى إن زيد في حسنه % % حريرة الحر وأعلاقه % 9(@)(@@) % لاضره ظلمي ولا نابه % % إقراحه قلبي وإقلاقه % % 10(@)(@@) % وإن غدا أظلم من قاسم % ذاك الذي يجفو وأشتاقه % PageV01P3133 11(@)(@@) % ياعجبا من ناظري إنه % % أضحت تقذاني آماقه % 12(@)(@@) % أعرض عني وجفا جانبي % % تقديمه البر وإلحاقه % 13(@)(@@) % والعذل شيء منه منقاده % % والفضل شيء منه منساقه % % 14(@)(@@) % ما أقرب المعروف من كفه % % فلم أغبتني أفواقه % % 15(@)(@@) % واغبر في دولته جبي % % وهو ربيع عم إغداقه % 16(@)(@@) % وحسبه ذكرى بإحسانه % % فأي شيء منه يعتاقه % % 17(@)(@@) % لا أشتكي البدر على بعده % % لقد أضاءت لي آفاقه % % 18(@)(@@) % ليس بمكفور ولا ضائع % إيناسه نفسي وإرفاقه % % 19(@)(@@) % لي أمل فيه إذا أخلقت % آمال قوم راث إخلاقه % % 20(@)(@@) % تحيا به نفسي وتلتذه % % وقد دنا بل آن إحقاقه % % PageV01P3134 21(@)(@@) % فاعقد لسان اللوم عن قاسم % % أو فليكن بالشكر إطلاقه % % 22(@)(@@) % وكيف يلحى خادم سيدا % إليه محياه وإنطاقه % % 23(@)(@@) % لايسرقن الحق من قاسم % فليس يخفي الحق سراقه % % 24(@)(@@) % من قاسم صيغت أماديحه % ومن حمام الأيك أطواقه % % 25(@)(@@) % لقاسم في كل حالاته % % شمائل السيف وأخلاقه % % 26(@)(@@) % مضاؤه إن أنت أعملته % % وقده الحلو ورقراقه % 27(@)(@@) % فتى يقر القلب إحسانه % كما يقر العين إيناقه % 28(@)(@@) % إن طلب الخير فمفتاحه % أو طلب الشر فمغلاقه % 29(@)(@@) % جربته في وعده فاستوى % % ميعاده عندي وميثاقه % % 30(@)(@@) % ماقيل في القاسم مدح له % % إلا وفي القاسم مصداقه % % PageV01P3135 31(@)(@@) % بفعله لا بأقاويلنا % % أربت على الأطلاق أطلاقه % % 32(@)(@@) % سيان في ميزان تقديره % % إفادة المال وإنفاقه % % 33(@)(@@) % يوجد مسبوقوه في فضله % % تترى ولا يوجد سباقه % % 34(@)(@@) % وكيف لا يثمر أحلى الجنى 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms722# % % من وزراء الصدق أعراقه % % 35(@)(@@) % غيث مغيث عرفه ودقه % % وبشره بالناس إبراقه % % 36(@)(@@) % إذا تعاطى مغرق مدحه % % أقصر والتقصير إغراقه % % 37(@)(@@) % قد حمل الله بحملانه % % من حملته نحوه ساقه % % 38(@)(@@) % يابن سليمان الذي باسمه % % تحيا لهذا الخلق أرماقه % 39(@)(@@) % ياعدة الملك وأملاكه % % لحادث ينباق منباقه % % 40(@)(@@) % يامن له الكيد الذي لم يزل % % يفلق صم الصخر أفلاقه % PageV01P3136 41(@)(@@) % مامفزع العافي إذا شفه % % حرمانه واشتد إملاقه % % 42(@)(@@) % يامعقل الجاني على نفسه % % إذا جنى مافيه إيباقه % % 43(@)(@@) % لردك المصر إلى أمنه % ردت إلى مصرك أباقه % 44(@)(@@) % وبابنك المرخص أمواله % % تغولي الحمد وأعلاقه % 45(@)(@@) % لولا مكان الحمد من قاسم % أوشك أن تكسد أسواقه % % 46(@)(@@) % قيم ملك وابن قوامه % % فتاق ما أعيا ورتاقه % % 47(@)(@@) % فالنجح ما ينجح إمضاؤه % % والحزم ما ينتج إطراقه % % 48(@)(@@) % من أهل بيت ساسة راضة % لديهم السم ودرياقه % % 49(@)(@@) % تجري على بطنان أيديهم % % نقائم الله وأرزاقه % % 50(@)(@@) % ذو العرف لا يبعد متاحه % والنكر لا تدر أعماقه % % PageV01P3137 51(@)(@@) % كم جامح أصبح إذ راضه % % تدمى لطول الكبح أشداقه % % 52(@)(@@) % شهاب نور ضامن للهدى % % وليس بالمأمون إحراقه % % 53(@)(@@) % غيث مغيث ضامن للحيا % % وليس بالمأمون إصعاقه % % 54(@)(@@) % يضحي إلى بذل السدى والندى % % وهو مشوق القلب مشتاقه % % 55(@)(@@) % يستعبد الحر له عرفه % % وقصده في ذاك إعتاقه % % 56(@)(@@) % قلت لمن جاراه لا يستوي % % صهال مضمار ونهاقه % % 57(@)(@@) % حقق للسيد تأميله % فيه ولا حقق إشفاقه % % 58(@)(@@) % وطال للحق به عمره % ودام للباطل إزهاقه % % 59(@)(@@) % واحتل من عاداه في منزل % حميمه آن وغساقه % % PageV01P3138 البحر : - 1(@)(@@) % أطبقت للنوم جفنا ليس ينطبق % وبت والدمع في خدي يستبق % 2(@)(@@) % لم يسترح من له عين مؤرقة % وكيف يعرف طعم الراحة الأرق % 3(@)(@@) % محمد وعلي فتتا كبدي % % إذا ذكرتهما والعيس تنطلق % 4(@)(@@) % خلان حل بقلبي من فراقهما % % ماكنت أخشى عليه قبل نفترق % % 5(@)(@@) % قلب رقيق تلظت في جوانبه % % نار الصبابة حتى كاد يحترق % 6(@)(@@) % وددت لم تم لي حجي بقربهما % % ماكل ما تشتهيه النفس يتفق % 7(@)(@@) % لايعجب الناس من وجدي ومن قلقي % % إن المشوق إلى أحبابه قلق % % PageV01P3139 البحر : - 1(@)(@@) % لايكشف الله عن وهب بن إسحاق % % من البلاء سماء ذات إطباق % 2(@)(@@) % قالوا الخبيث قد استسقى فقلت لهم % % لايشفه طب ذي طب ولا راق % 3(@)(@@) % قد كان يكثر من هاضوم غلمته 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms723# % % بجهده لو وقاه حتفه واقي % % 4(@)(@@) % لايرج بعدك للهاضوم منفعة % إن مت من الماء ياوهب بن إسحاق % % 5(@)(@@) % إذا دعا لك داع قلت حينئذ % لازال من وصب الشكوى على ساق % % 6(@)(@@) % إن رأيت حيائي خلته خنثا % قد غر من غر من أفعى بإطراق % 7(@)(@@) % بمثل ظنك هذا يا أبا حسن % أمنت كل ممر المتن غرناق % 8(@)(@@) % حتى عثوا في نساء كالدمى عرب % إذ لم يكن بينهم باب بمغلاق % % 9(@)(@@) % أحسنت ظنك جدا بالرجال فكن % % على محاذرة منهم وإشفاق % % 10(@)(@@) % لاتعدم الماء من سقيا ويعقبه % % سقياك في النار من مهل وغساق % PageV01P3140 البحر : - 1(@)(@@) % وثدي ناهدات % لم يخضدها العناق % 2(@)(@@) % بينها حلي نفيس % كفؤه تلك الحقاق % 3(@)(@@) % في صدور ساليات % لم يلذعها الفراق % % PageV01P3141 البحر : - 1(@)(@@) % وزائرة الخيال بلا اشتياق % تأوبها ولكن باشتياقي % % 2(@)(@@) % فيا كذب اللقاء وقد تلاقى % % خيالانا ويا صدق الفراق % PageV01P3142 البحر : - 1(@)(@@) % مالي يزاحمني الخلصان في طرقي % % ولا أزاحمه بالشعر في طرقه % 2(@)(@@) % لايجهلن على حلمي أخو ثقة % فالجهل من خلقي إن كان من خلقه % PageV01P3143 البحر : - 1(@)(@@) % ياليت شعري والحوادث جمة % هل أشتكي دهري وأنت صديقي % % 2(@)(@@) % وشكايتي الأيام دون شكايتي % % إن خانني عند النهوض فريقي % % 3(@)(@@) % إني أعوذ بما تأكد عقده % بيني وبينك أن تضيع شقيقي % % 4(@)(@@) % أو أن يجور به الزمان عن الغنى % % أو بي وأنت طريقه وطريقي % % PageV01P3144 البحر : - 1(@)(@@) % هل للمسمى بما تكنى الكلاب به % % قولا سيلحقه عارا فيلحقه % 2(@)(@@) % يا مبتلى ببلاء لا ثواب له % % يوم الحساب ولكن سوف يوبقه % 3(@)(@@) % ماقلت فيك هجاء خلته كذبا % إلا بدت منك سوءات تحققه % % 4(@)(@@) % أنى اجتبيت أبا حفص وصحبته % % حتى غدوت تؤاخيه فتصدقه % % 5(@)(@@) % بالله ربك هل شبهت صلعته % % برأس أير عظيم كنت تعشقه % PageV01P3145 البحر : - 1(@)(@@) % فيم التنازع والشقاق % والأمر بينكما وفاق % 2(@)(@@) % ولخصمه فيها ولا % % دة من بكفيه الطلاق % % 2(@)(@@) % فلخالد فيها ولا % % بالله ربك حقا % % 2(@)(@@) % ألبنت بنتكما معا فلخالد فيها ولا بالله ربك حقا ولخصمه فيها ولا دة من بكفيه الطلاق % % شهدت به السبع الطباق % % PageV01P3146 البحر : - 1(@)(@@) % يا ذا الطواحن قل لي % % بالله ربك حقا % % 2(@)(@@) % أهن أدوم طحنا % أم شفر أختك سحقا % % PageV01P3147 البحر : - 1(@)(@@) % بكعبة الله بل بخالقها % % أقسم لوأن خالدا غرقا % % 2(@)(@@) % وجاءه منقذ 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms724# لينقذه % % وهو كظيم يعالج الشرقا % % 3(@)(@@) % ماوقعت كفه وقد جعلت % من شدة الكرب تطلب العلقا % % 4(@)(@@) % إلا على فيشة المغيث له % % تعمدا منه أو كما اتفقا % % PageV01P3148 البحر : - 1(@)(@@) % عدوك من صديقك مستحيل % فلا تستكثرن من الصديق % % 2(@)(@@) % كذاك الداء أكثر ماتراه % % من الأشياء تحلو في الحلوق % % PageV01P3149 البحر : - 1(@)(@@) % الدمع في العين لانوم ولانظر % % ولامحالة من معنى له خلقا % % 2(@)(@@) % ولم أجد ذلك المعنى وعيشكما % % إلا البكاء إذا مافاجع طرقا % % 3(@)(@@) % فخليا أدمعي تقرو مساربها % % فإنها عبر إن لم يفض خنقا % % 4(@)(@@) % رزئي أجل فلا تكذب ظنونكما % % من أن يصدق مجلودي ولوصدقا % % PageV01P3150 البحر : - 1(@)(@@) % عزت مطالب دنيا كل ذي أدب % وهان مطلب دنيا الأنوك الخرق % 2(@)(@@) % وقدر الله فيها أن يذللها % % فهان مطلبها للجاهل الحمق % 3(@)(@@) % فليس ينفك ذو علم وتجربة % من مأكل جشب أو مشرب رنق % % 4(@)(@@) % وذو الجهالة منها في بلهنية % من مسمع حسن أو منظر أنق % % 5(@)(@@) % فقل للغريب اليوم إنك راحل % إلى منزل داني المحل سحيق % % 5(@)(@@) % ألا كل حي هالك وابن هالك % وذو نسب في الهالكين عريق % % 5(@)(@@) % ويا رب حزم في التراب ونجدة % % ويارب رأي في الراب زنيق % 5(@)(@@) % ايا رب وجة في لتراب عتيق % ويا رب حسن في التراب رقيق % % 5(@)(@@) % تبارك العدل فيها حين يقسمهاطويل ايا رب وجة في لتراب عتيقويا رب حسن في التراب رقيق ويا رب حزم في التراب ونجدة ويارب رأي في الراب زنيق ألا كل حي هالك وابن هالك وذو نسب في الهالكين عريق فقل للغريب اليوم إنك راحل إلى منزل داني المحل سحيق % % بين البرية قسما غير متفق % % PageV01P3151 البحر : - 1(@)(@@) % وماتعدم الدنيا الدنية أهلها % % شواظ حريق أو دخان حريق % % 2(@)(@@) % يجرع فيها مالك فقد هالك % فيشجى فريق منهم بفريق % % 3(@)(@@) % فلا تحسب الدنيا إذا ماسكنتها % % قرارا فما دنياك غير طريق % % PageV01P3152 البحر : - 1(@)(@@) % طويل إذا امتحن الدنيا لبيب تكشفتله عن عدو في ثياب صديق متى غمرت دنيا أخاها بمائها % % فليس وإن أروته غير غريق % % PageV01P3153 البحر : - 1(@)(@@) % إذا امتحن الدنيا لبيب تكشفت % له عن عدو في ثياب صديق % 2(@)(@@) % عليك بدار لا يزول ظلالها % % ولايتأذى أهلها بمضيق % % 3(@)(@@) % فما يبلغ الراضي رضاه ببلغة % ولاينقع 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms725# الصادي صداه بريق % % PageV01P3154 البحر : - 1(@)(@@) % قالوا أأرهنت دما % فقلت أرهنت ثقه % 2(@)(@@) % عند الذي أعرفه % % برحمة وشفقه % 3(@)(@@) % ذاك الذي يحكي لنا ال % % مسك قديما عرقه % % 4(@)(@@) % ولايرى الله العلا % % تسلك إلا طرقه % % 5(@)(@@) % ذاك الذي من مائه % % أنبت عودي ورقه % % 6(@)(@@) % ومن أماديحي له % % من كيسه لا سرقه % % PageV01P3155 البحر : - 1(@)(@@) % أبا جعفر هل أنت قابل شاعر % كذوب يريد الانقياد إلى الصدق % 2(@)(@@) % مضت حقبة وهو الخبيث مآكلا % يحاول طيب الرزق من مطلب الرزق % % 3(@)(@@) % وقد كان ممن يشهد الزور مرة % بأنزر منزور وما ذاك بالطلق % 4(@)(@@) % ويعرض علق الصدر من حر شعره % % على القوم لا يدرون ماقيمة العلق % 5(@)(@@) % أحل حرام المدح في غير أهله % % فجوزي حرمانا فلم يؤت من حذق % 6(@)(@@) % وليس له من توبة غير مدحه % % ذكيا كريم الفرع مثلك والعرق % 7(@)(@@) % فأعتقه من رق المذلة إنه % % على ثقة في نفسه منك بالعتق % PageV01P3156 البحر : - 1(@)(@@) % سائل أبا الصقر إذا جئته % % عن أمه ذات البساتيق % % 2(@)(@@) % وضربها الكامخ في طيزها % % بين دنان ودواريق % 3(@)(@@) % قاد أبا الصقر إلى ما أرى % % من فعله قائد توفيق % % 4(@)(@@) % عرض لي بعد مواعيده % % دون المنى عارض تعويق % % 5(@)(@@) % ياعجبا ليس لأن ردني % % من بعد إيماض وتبريق % % 6(@)(@@) % ولا لأن أخلفني وعده % % لكن لإيماني وتصديقي % % 7(@)(@@) % أعجب بمثلي سائلا مثله % % مهر استه ذات الأفاويق % % 8(@)(@@) % بحقه المسكين لم يعطني % % غير الهواهي والمخاريق % % 9(@)(@@) % ماكان من كان يبيع استه % % من نائكيه بالدوانيق % % 10(@)(@@) % مشتريا حمدا بما جمعت % كفاه من تلك التفاريق % % PageV01P3157 11(@)(@@) % لم يجمع المال ببذل استه % % من فرق شتى وتفريق % % 12(@)(@@) % الله صديقي في ذمه % % بل لؤمه المشهور صديقي % % 13(@)(@@) % شأنك والضيق كما لم تزل % % بل وكد الضيق بتضييق % 14(@)(@@) % من جمع الأموال من مثل ما % % جمعته لم يلج في ضيق % % 15(@)(@@) % ماكنت أهلا حين أملته % % إلا لتجهيل وتحميق % % 16(@)(@@) % بأي حق لي أو حرمة % أملت أن يبلعني ريقي % % 17(@)(@@) % هل كنت في العزاء عونا له % % أيام يرمى يالمزاريق % % 18(@)(@@) % أو شاهدا مالقيته استه % % إذ ذاك من شق وتخريق % % 19(@)(@@) % أو حاملا أثقال أحماله % % تلك التي لا في جواليق % % 20(@)(@@) % ولا صناديق سوى رزمة % تدس في شر الصناديق % % PageV01P3158 21(@)(@@) % أو رقع المدح الذي قلته % % وهي استه الواهية 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms726# الريق % % 22(@)(@@) % كلا فما يحفى على مثله % % أمر تفاقيع وتشقيق % % 23(@)(@@) % سبحان من خوله نعمة % أنسته جهد البؤس والضيق % % 24(@)(@@) % إذ تلعب الناكة في متنه % % مابين تزليق وتسليق % % 25(@)(@@) % بكل جردان له فيشة % كأنها قرعة إنبيق % % 26(@)(@@) % كم من حروب قد أناخت له % % بلا عجاج وبلا ضيق % % 27(@)(@@) % بل كان منها في ندى ماله % بل في بحار ذات تغريق % % 28(@)(@@) % درت عليه درر جمة % % من نطف ذات أفاويق % % 29(@)(@@) % فاست أبي الصقر وماحولها % % أهوية ذات زحاليق % % 30(@)(@@) % يالك في الهيجاء من فارس % % مشتهر بالصبر بطريق % % PageV01P3159 31(@)(@@) % يظل مركوبا بها راكبا % مذاكي الجرد المعاتيق % % 32(@)(@@) % يركب من راكبه شنعة % زينت بتتويج وتطويق % % 33(@)(@@) % مطاعنا والطعن من قرنه % % وليس منه غير تدريق % 34(@)(@@) % سبحان واقيه سوى دبره % % وقع جراب ذات تذليق % 35(@)(@@) % جازت عن الجلد إلى عرضه % فمزقته كل تمزيق % % 36(@)(@@) % خفض أبا الصقر فكم طائر % خر صريعا بعد تحليق % % 37(@)(@@) % زوجت نعمى لم تكن كفأها % % فصانها الله بتطليق % % 38(@)(@@) % وكل نعمى غير مشكورة % % رهن زوال بعد تمحيق % % 39(@)(@@) % لاقدست نعمى تسربلتها % % كم حجة فيها لزنديق % % 40(@)(@@) % صبرا أبا الصقر للوم امرئ % أصلاك نارا ذات تحريق % % PageV01P3160 41(@)(@@) % شرد عن عينيك حلو الكرى % % وشاب دنياك بترنيق % % 42(@)(@@) % أرقه مدحك لا مجديا % فاقتص تأريقا بتأريق % % PageV01P3161 البحر : - 1(@)(@@) % وثقيل جليسه في سباق % ساعة منه مثل يوم الفراق % 2(@)(@@) % كشجى الحلق لا يسوغ ولا يل % % فظ بين اللهى وبين التراقي % % 3(@)(@@) % قد قضى الله موته منذ حين % % واحتوى الموت نفسه وهو باق % 4(@)(@@) % لا أسميه باسمه قد كفاني % % أنه وحده بغيض العراق % PageV01P3162 البحر : - 1(@)(@@) % ومعاشر بصقوا على ما قلته % % لم أرض أوجههم ممج بصاقي % % 2(@)(@@) % فبصقت في الأحراح من نسوانهم % % وطعنتهن بأيما مزراق % 3(@)(@@) % ومججب في أرحامهن مجاجة % أوجدتهن لها ألذ مذاق % % 4(@)(@@) % وكذاك أجزي كل منفق بصقة % في غير موضعها من الإنفاق % % PageV01P3163 البحر : - 1(@)(@@) % ومائق فوق صدره هنة % جازت بشبر مشك منطقته % 2(@)(@@) % إذا أراد الكرى توسدها % % فقد كفته مكان مرفقته % % 3(@)(@@) % علامة الفسق طول لحيته % % وآية الفحل طول شقشقته % % PageV01P3164 البحر : - 1(@)(@@) % لشنطف كعثب خلق % % تشعب جوفه طرق % 2(@)(@@) % مريح منتنأبدا % على جنباته لثق % 3(@)(@@) % كمثل البحر يخشى في % % ه هول المد والغرق % 4(@)(@@) % يسيل لعابه أبدا % وتأكل بطنه الحرق % 5(@)(@@) % كقدر 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms727# لا يزال يسي % % ل من أثقابها المرق % 6(@)(@@) % تخوض فياشل الأوغا % % د لجته وتخترق % % 7(@)(@@) % كثير الضحك فالشفتا % % ن منه ليس تنطبق % % 8(@)(@@) % تعود ذاك خلقا فه % % و طول الدهر منفلق % % 9(@)(@@) % لها إبط كريح المي % ت منه الرشح والعرق % % 10(@)(@@) % تقول لمن تصابره % % مكانك ليس نفترق % % PageV01P3165 11(@)(@@) % وأشهى من أغانيها % % إلي النار والفلق % % 12(@)(@@) % وأحمى من أحاديث % تحدثنا بها الدمق % 13(@)(@@) % قصيرة حقيرة % قليل قدرها شفق % 14(@)(@@) % تمل قنا وليس يطي % % ب منها ذلك الملق % 15(@)(@@) % وتدعونا إلى بثق % % بشر الماء ينبثق % % 16(@)(@@) % فيأخذنا لذاك الزم % % ع والإشفاق والفرق % % 17(@)(@@) % وتظهر عفه وتمي % % ل نحو فتى شبق % % 18(@)(@@) % كأن الرأس منها لم % % يركب تحته عنق % % 19(@)(@@) % وتخضب رأسها والوج % % ه يشهد أنها خلق % % 20(@)(@@) % وليس لطيبها عبق % ولكن نتنها عبق % % PageV01P3166 21(@)(@@) % لقد كملت مقابحها % % فلا خلق ولا خلق % % PageV01P3167 البحر : - 1(@)(@@) % نكهت شنطف ففاح كنيف % وأتاها امرؤ فصاح الغريقا % % 2(@)(@@) % غرقته في كعثب مثل مد ال % % بحر مازال للأيور طريقا % % 3(@)(@@) % يحذر الفيل أن يموت غريقا % فيه لا أن يموت فيه خنيقا % % 4(@)(@@) % صابرتني يوما وقالت أغثني % % بجماع به أطفي الحريقا % % 5(@)(@@) % قلت بي طاقة على الموت لكن % لست للقرب منك ويك مطيقا % % 6(@)(@@) % قلصت درعها وألقت على الأر % ض قفاها وأبدت المفلوقا % % 7(@)(@@) % فرأيت اللهاة منها وأعرض % % ت وغادرتها تطيل الشهيقا % % 8(@)(@@) % إنما شنطف أتان وديق % % خاب من ينكح الأتان الوديقا % % 9(@)(@@) % فرق الله بين جسم وروح % % تشتهي نيك شنطف تفريقا % % PageV01P3168 البحر : - 1(@)(@@) % وأقصر عنه الطرف خوف ملالتي % % عليه وحوبائي إليه تتوق % 2(@)(@@) % وما مثله خيف الملالة والقلى % % عليه ولكن المحب شفيق % PageV01P3169 البحر : - 1(@)(@@) % طلبت لديكم بالعتاب زيادة % وعطفا فأعتبتم بإحدى البوائق % % 2(@)(@@) % فكنت كمستسق سماء بخيلة % % حيا فأصابته بإحدى الصواعق % % 3(@)(@@) % ومن ظن أن الاستزادة في الهوى % % تؤول بمعشوق إلى هجر عاشق % % PageV01P3170 البحر : - 1(@)(@@) % أشكو الفراق إلى التلاقي % % وإلى الكرى سهر المآقي % % 2(@)(@@) % وإلى السلو تفجعي % % وإلى التصبر ما ألاقي % % 3(@)(@@) % وإلى الذي شطت به % % عني النوى طول اشتياقي % % 4(@)(@@) % وطوت حشاي على الجوى % % لما طوته يد الفراق % % 5(@)(@@) % صبرا فرب تفرق % آت بقرب واتفاق % % PageV01P3171 البحر : - 1(@)(@@) % لما استكن الكرى في كل ناظرة % وبات جفن من الواشي به شرقا % % 2(@)(@@) % سرى إلي على خوف يحاذره 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms728# % % زور أتى تحت جنح الليل منسرقا % % 3(@)(@@) % أخفى من الطيف إلا أن بهجته % % حسنا جلت بسنا أنواره الأفقا % % 4(@)(@@) % مضمخ بغوال عل مفرقه % % أيدي حواضنه مسكابها عبقا % % 5(@)(@@) % تشكو إلى قلق حيران مكتئب % صب إلى قربه الأحزان والقلقا % % 6(@)(@@) % صوتا تراني مجنونا أخا كلف % إذا سليمان يوما قد به نطقا % % 7(@)(@@) % قد سحب الناس أذيال الظنون بنا % % وفرق القوم فينا ظنهم فرقا % % PageV01P3172 البحر : - 1(@)(@@) % أرقني بعد أن عجبت له % % أبيض كالأقحوان متسقا % % 2(@)(@@) % أضحك منه كأنه برد % أرسله الموت بعدما برقا % % 3(@)(@@) % لو تستطيع تسلبت من طوقها % % لو كان منتحلا من الأطواق % % 3(@)(@@) % تدعو اماويت الشجى في صوتها % % ابدا تراه منتحلا من الأطواق % % 3(@)(@@) % ايكية تدعو بشجو إن دعا % % ريب الزمان قرينها بفراق % 3(@)(@@) % أشجتك داعية مع الإشراق % % هتفت بساق في ذوابه ساق % 3(@)(@@) % عاد عليه الزمان يثرمهكامل أشجتك داعية مع الإشراقهتفت بساق في ذوابه ساق ايكية تدعو بشجو إن دعا ريب الزمان قرينها بفراق تدعو اماويت الشجى في صوتها ابدا تراه منتحلا من الأطواق لو تستطيع تسلبت من طوقها لو كان منتحلا من الأطواق % % شيئا فشيئا كأنما استرقاب % % PageV01P3173 البحر : - 1(@)(@@) % إذا أحدقوا بي في المكر حجزتهم % % بسور من الضرب الدراك وخندق % 2(@)(@@) % وشيعني قلب هناك مشيع % وظلة موت ذات حال ومصدق % 3(@)(@@) % تزيد على عشرين رطلا ومثلها % % وتهتز ريا من دباج ورونق % 4(@)(@@) % وفي عرضها بالشبر وقفا وطولها % % بخمسة أشبار بشبر مفرق % % 5(@)(@@) % إذا هي لم تفر الجماجم خذرفت % خذاريف شتى من أكف وأسوق % 6(@)(@@) % لها هبة بعد المضاء كأنها % % هزيز الصبا بين الأباء المحرق % % 7(@)(@@) % فمن أخطأته استوهلته وأيهم % % أصابت فهبه نطفة لم تخلق % 8(@)(@@) % كأن لقاء الهام إذ خذرفت به % % لقي حنظل بالصحصحان مفلق % 9(@)(@@) % كأنهم لما أطافوا بجانبي % % أطافوا بركن من عماية أخلق % % 10(@)(@@) % تزل عتاق الطير عن قذفاته % % أشم بناف بالعماء منطق % % PageV01P3174 11(@)(@@) % فلما رأوا رأي الجلية إنما % % تصلوا بألهوب من النار محرق % 12(@)(@@) % تولوا وقد هروا هرير مذاقتي % % ومن يرعني يوم الكريهة يسبق % % 13(@)(@@) % وأحمس حزب الله ركضا وراءهم % % وضربا متى تحدو الوسائق يوسق % % 14(@)(@@) % فأعطوا بأيديهم وألقوا سلاحهم % % وشاع التنادي أمكن الأسر أوثق % 15(@)(@@) % وبلت برأس التركشوأعصفت % له تحت منسوج 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms729# العجاج المشبرق % % 16(@)(@@) % تحليته والنقع مرخ سدوله % % بنظرة خطاف الكلاليب أزرق % % 17(@)(@@) % فأضربه في مفرق الرأس ضربة % تعودتها من مفرق بعد مفرق % % 18(@)(@@) % وهان عليه أن يطول ثراؤه % % على الجانب الغربي من قنص أبسق % 19(@)(@@) % فأدلى له التأمير والأمر بعدها % % وقد حلقت بالعبد أولى محلق % % 20(@)(@@) % وأمست له الأنبار مثوى كرامة % وأمست لهم مثوى هوان ومرهق % % PageV01P3175 21(@)(@@) % وكانوا كأوصال القناة تتابعت % وكنت لهم مثل السنان المزلق % 22(@)(@@) % فكادهم رب السماء بمؤيد % من الكيد أخاذ بسمع ومنطق % % PageV01P3176 البحر : - 1(@)(@@) % طرقت بنشوة روضة ربعية % % بات الندى في نورها يترقرق % 2(@)(@@) % خلق تخلقه زمانك مرة % وإلى الخليقة يرجع المتخلق % 3(@)(@@) % لو أمتع المرء الشباب حياته % % أزرى به أن المآرب تخلق % PageV01P3177 البحر : - 1(@)(@@) % إذا المرء أرقني مدحه % وأغفل حقي أرقته % 2(@)(@@) % بشتم إذا بات يصلى به % % توهم أني حرقته % % PageV01P3178 البحر : - 1(@)(@@) % قد أخلق الناس الهدايا كلها % % إلا الكلام فإنه لم يخلق % 2(@)(@@) % فجعلت إهدائي إليك قصيدة % بكرا بخاتم ربها لم تفتق % PageV01P3179 البحر : - 1(@)(@@) % كأنها والخزر من أحداقها % % والخطط السود على أشداقها % % 2(@)(@@) % % ترك جرى الإثمد من آماقها % % PageV01P3180 البحر : - 1(@)(@@) % إني لأحكم في عود تحرقه % يامعرقا في شقاقي أي إعراق % 2(@)(@@) % تسيء بي حين لا أجزيك سيئة % والعود يجزيك تدخينا بإحراق % PageV01P3181 البحر : - 1(@)(@@) % يقولون لي ألفاظ هجوك عندنا % % إلى القلب من ألفاظ مدحك أسبق % 2(@)(@@) % فقلت لهم كذب مديحي فيكم % وهجوي لكم صدق وللصدق رونق % PageV01P3182 البحر : - 1(@)(@@) % شكوى لو أني أشكوها إلى حجر % % أصم ممتنع الأركان انفلقا % % PageV01P3183 البحر : - 1(@)(@@) % وسمت همتي فجازت العي % % يوق بعدا وجازت العيوقا % % PageV01P3184 البحر : - 1(@)(@@) % تيس تنفق بالدلال ليشتهى % % فازداد مقتا بالدلال وما نفق % 2(@)(@@) % فكأنه من يبسه وسواده % % محراك تنور تلوى فاحترق % PageV01P3185 البحر : - 1(@)(@@) % خيري ورد أتاك في طبق % % قد ملأ الخافقين من عبقه % 2(@)(@@) % قد خلع العاشقون ماصنع ال % % هجر بألوانهم على ورقه % PageV01P3186 البحر : - 1(@)(@@) % إن جاء من يبغي لها منزلا % فقل له يمشي ويستنشق % PageV01P3187 البحر : - 1(@)(@@) % يابن داود يا فقيه العراق % % أفتنا في قواتل الأحداق % 2(@)(@@) % هل عليهن في الجروح قصاص % % أم مباح لها دم العشاق % % 3(@)(@@) % كيف يفتيكم قتيل صريع % بسهام الفراق والاشتياق % % 4(@)(@@) % وقتيل التلاقي أحسن حالا % عند داود من قتيل الفراق % PageV01P3188 البحر : - 1(@)(@@) % كأن الكأس في يدها 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms730# وفيها % % عقيق في عقيق في عقيق % % PageV01P3189 البحر : - 1(@)(@@) % كأن الثريا إذ تجمع شملها % % رياض ربيع فصلت بشقيق % % 2(@)(@@) % وقد لمعت حتى كأن بريقها % % قلائد در فصلت بعقيق % % PageV01P3190 البحر : - 1(@)(@@) % ومدامة كدم الذبيح شربتها % % والبدر يجنح من خلال المشرق % 2(@)(@@) % وكأنما زهر الكواكب حوله % % درر نثرن على بساط أزرق % PageV01P3191 البحر : - 1(@)(@@) % يامن بغرته الهلال أما ترى % % قمر السماء وقد بدا في المشرق % % 2(@)(@@) % كخريدة نظرت إلى إلف لها % % فتلثمت خجلا بكم أزرق % % PageV01P3192 البحر : - 1(@)(@@) % وقفت وقفة بباب الطاق % ظبية من مخدرات العراق % 2(@)(@@) % بنت سبع وأربع وثلاث % % أسرت قلب صبها المشتاق % 3(@)(@@) % قلت من أنت ياغزال فقالت % % أنا من لطف صنعة الخلاق % % 4(@)(@@) % لاترم وصلنا فهذا بنان % % قد صبغناه من دم العشاق % % PageV01P3193 البحر : - 1(@)(@@) % قالت شقائق قبره % % ولرب أخرس ناطق % 2(@)(@@) % فارقته ولزمته % % فأنا الشقيق الصادق % PageV01P3194 البحر : - 1(@)(@@) % وشفوف البدن النا % % عم في الثوب الرقيق % 2(@)(@@) % ورحيق كحريق % % في أباريق عقيق % 3(@)(@@) % إن ذا من ورد خد % ديك لصباغ رفيق % % PageV01P3195 البحر : - 1(@)(@@) % حيتك عني السعود والفلك % % والله والصالحون والملك % 2(@)(@@) % وأرضعتك الحظوظ درتها % % رضاعة من ورائها حشك % % 3(@)(@@) % نحية سلفتكها مقتي % % قبل التلاقي لركبها رتك % 4(@)(@@) % يلتذها السمع منك حين توا % % فيك وممن يحيرها الحنك % 5(@)(@@) % ياأيها القادم الذي انبلجت % غرته فانجلى بها الحلك % 6(@)(@@) % اقدمتم سالمين والمجد مق % % صور عليكم والفضل مشترك % 7(@)(@@) % وحرمة الجار والمطيف بكم % % ممنوعة والثراء منتهك % 8(@)(@@) % يا طالبي ما يحاك من حلل ال % % حمد بأغلى ما تطبع السكك % % 9(@)(@@) % طلبتم حقكم وفي الحق أن % يقرن ما تطلبون والدرك % 10(@)(@@) % لازلتم سادة مضاحك للم % % لك وأعداء حظكم ضحك % PageV01P3196 11(@)(@@) % مسترفدي الجاه والأكف على % % أبوابكم للعفاة معترك % 12(@)(@@) % دعاء مستعصم بكم أبدا % ما دام فيه السكون والحرك % PageV01P3197 البحر : - 1(@)(@@) % عسرت علينا دعوة السمك % أنى وجودك ضامن الدرك % 2(@)(@@) % يا من أضاء شهاب غرته % فجلا ظلام الليل ذي الحلك % 3(@)(@@) % اذكر هداك الله موعدنا % % ودع السكون له إلى الحرك % % 4(@)(@@) % واعلم وقيت الجهل أنك في % % قصر تليه مطارح السمك % 5(@)(@@) % والفضل من كفيك مشترك % لكن فضلك غير مشترك % 6(@)(@@) % وحريم مالك جد منتهك % لكن عرضك غير منتهك % 7(@)(@@) % والعرف تسديه إلى لسن % خير المتاع وأفضل الترك % 8(@)(@@) % وثناء مثلي غير مطرح % وسؤال مثلك 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms731# غير مترك % % 9(@)(@@) % وبنات دجلة في فنائكم % % مأسورة في كل معترك % 10(@)(@@) % تفرى بأمثال الدروع وأح % % يانا بمثل نوافذ الشكك % % PageV01P3198 11(@)(@@) % بيض كأمثال السبائك بل % % مشحونة بالشحم كالعكك % % 12(@)(@@) % تغني عن الزيات قاليها % % وتبخر الشاوين بالودك % 13(@)(@@) % حسنت مناظرهاوساعدها % % طعم كحل معاقد التكك % % 14(@)(@@) % والناقة الغرثان يرقبها % % قلق الخواطر متعب الملك % 15(@)(@@) % متسحبا منكم على كرم % يا آل بشر لا على حسك % 16(@)(@@) % والهازباء هدية ذهبت % مذ جاوزت أسكفة الحنك % 17(@)(@@) % وافى فألقيناه في معد % لم نلقه للنسل في برك % 18(@)(@@) % فمضى وأحوجنا إلى خلف % من سيد كالبدر في الفلك % 19(@)(@@) % وكذا المطاعم كلها جعلت % مسكا مجددة على مسك % 20(@)(@@) % هي خلعة ليست بباقية % كالخز والسمور والفنك % PageV01P3199 21(@)(@@) % هاتيك كالشيء المقيم لنا % % والزاد كالمجتاز في السكك % % 22(@)(@@) % فليصطد الصياد حاجتنا % % تصطد مودتنا بلا شرك % PageV01P3200 البحر : - 1(@)(@@) % الحمد لله الذي نجى السمك % من الشصوص الجائلات والشبك % 2(@)(@@) % علمه يونس من تسبيحه % % ما كان أداه إلى تسريحه % % 3(@)(@@) % فهو من الصياد في أمان % ما دمت أبغيه وفي ضمان % 4(@)(@@) % إني عليه لعظيم البركه % فليدع لي ما صحبته الحركه % PageV01P3201 البحر : - 1(@)(@@) % شبهي بوجنتك الملي % % حة موجب حقي عليكا % % 2(@)(@@) % فبحرمتي لما استجب % % ت لجاعلي سببا إليكا % % PageV01P3202 البحر : - 1(@)(@@) % بني إن فضول الحظ مبشمة % فخذ لقوتك بعض الحظ واترك % 2(@)(@@) % وكن قلنسوة المملوك تحظ بها % % ولا تكونن نعلي بذلة الملك % % PageV01P3203 البحر : - 1(@)(@@) % أصبحت عاديت للصبا رشدك % جهلا وأسلمت للهوى قودك % 2(@)(@@) % حتى متى لا تفيق من سنة % ولا يداوي مفند فندك % 3(@)(@@) % تعمل في صيد كل صائدة % ختلك طورا وتارة طردك % 4(@)(@@) % نرمي التي إن أصاب ظاهرها % % سهمك شكت بحده كبدك % 5(@)(@@) % يا صاحب اللوم هب لذي شغف % عونك فيما عراه أو جلدك % % 6(@)(@@) % أوسعه عذرا ولم معدبه % % وقل له عن أخ قد اعتقدك % % 7(@)(@@) % يا حسن الجيدكم تدل على الصب % % ب كأن قد نحلته جيدك % 8(@)(@@) % يا واضح الثغر كم تدل على الصب % % ب كأن قد أذقته بردك % % 9(@)(@@) % أدلل عليه إذا فعلت به % % أفعالك اللائي أشبهت غيدك % 10(@)(@@) % حظي من لؤلؤيك منعك من % % ظومك مني وتارة بددك % PageV01P3204 11(@)(@@) % لا لثم ثغر ولا محاورة % يحلى به من هواه قد عبدك % % 12(@)(@@) % يا موردا صادق العذوبة أش % % كوك 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms732# وأشكو الحماة أن أردك % 13(@)(@@) % إذا افترقنا وشى الوشاة وإن % كان التلاقي وجدتهم رصدك % 14(@)(@@) % وأنت في منع ما أحب مع ال % % قوم فمن ذا يجير مضطهدك % 15(@)(@@) % يا ليت روحي وروحك التقتا % % في جسدي أو أحلتا جسدك % 16(@)(@@) % عجبت من ظلمك القوي ولو % % شاء ضعيف ثناك أو عقدك % 17(@)(@@) % دع ذا وقل في مديح ذي كرم % قوم إفضال كفه أودك % 18(@)(@@) % ممن إذا ما رجوت نائله % أنجزك الظن فيه ما وعدك % 19(@)(@@) % ما حوذرت نكبة مزلزلة % بالناس إلا جعلته سندك % 20(@)(@@) % أولاك ما يوجب اعتيادك أد % % ناه وما منه ولا اعتبدك % PageV01P3205 21(@)(@@) % إسحاق أمتعت بالسلامة وال % % أمن ولا فارق التقى خلدك % 22(@)(@@) % وكثر الله من فتاك أبي إس % % حاق في ظل نعمة عددك % 23(@)(@@) % واعتمد الله بالمكاره من % % قدرها فيك أو بها اعتمدك % 24(@)(@@) % كم غائب غاب ثم عاد فأل % % فاك أخا سؤدد عهدك % 25(@)(@@) % ترغب في حمد حامديك ولا % % تحرم جدوى يديك من جحدك % 26(@)(@@) % لا يرهب القاصدوك منحسة % قد قصد الحظ باب من قصدك % 27(@)(@@) % يا جبل الله في بسيطته % % لا هدك الله بعدما وطدك % 28(@)(@@) % حقا لقد سلك الهدى ذكرا % عضبا وكان الضلال قد غمدك % 29(@)(@@) % كأنهما يشهد النبي أو الصد % ديق أو صاحبيه من شهدك % 30(@)(@@) % ورثت عباسك الوسامة والرأ % % ي فما ينكر امرؤ سددك % PageV01P3206 31(@)(@@) % وعلم عبد الإله إرثك لا % % شك فمن ثم تستقي مددك % 32(@)(@@) % ولم تزل مذ نشأت ممتثلا % % نسك علي ميمما صمدك % 33(@)(@@) % وما تعديت من محمد ال % % حلم إذا ما المميز انتقدك % 34(@)(@@) % وحزم منصورك المشاد به % % فيك ومن ثم تحتذي لددك % 35(@)(@@) % وساق عيسى إليك آصرة الش % شيخين رفدا فنعم ما رفدك % 36(@)(@@) % وإن بغاك امرؤ بحيث بنى % % أحمد أعلى بنيانه وجدك % 37(@)(@@) % وما تخلفت عن خصال أبي إس % % حاق من سعيه ولا جهدك % 38(@)(@@) % آباء صدق إذا بنيت من ال % % مجد بناء وجدتهم عمدك % 39(@)(@@) % من كلهم فيك شيمة فتلت % حبلك شزرا وأحكمت عقدك % 40(@)(@@) % وترفد الخير من جدودك أو % % يلقى بك النسب صاعدا أددك % PageV01P3207 41(@)(@@) % أقول للمنبر الشريف وقد % طال مدى ما اقتضاك وارتصدك % 42(@)(@@) % صبرا فلو قد علاك فارسك ال % % أصيد أحيا بريحه صيدك % 43(@)(@@) % أبشر به 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms733# منبر العروبة وأن % % ظره كأني أراه قد صعدك % 44(@)(@@) % إذ لا تجوز الصواب خطبته % ولايضل الهدى إذا اقتعدك % 45(@)(@@) % وكيف لا تكثر الحنين من الشو % % ق إليه وجده مهدك % 46(@)(@@) % يا غرس ذي العرش لا شريك له % أنبتك الله ثم لا حصدك % 47(@)(@@) % بقيت للمكرمات ما بقيت % ولا فقدت الندى ولا فقدك % 48(@)(@@) % وحائر الرأي فيك قلت له % % أراك شبهت بحره ثمدك % 49(@)(@@) % يا رمد العين قم قبالته % فداو باللحظ نحوه رمدك % 50(@)(@@) % أقصر عن الجهل يا مماجده % % فقد قضى الله أنه مجدك % PageV01P3208 51(@)(@@) % نافست في المنفسات من وسعت % إحدى مناديح صدره بلدك % 52(@)(@@) % ألوم من يرتجي لحاقك في المج % % د كما لا ألوم من حسدك % 53(@)(@@) % جاراك أهل العلاء فانقطعت % أنفاسهم قبل قطعهم أمدك % 54(@)(@@) % جروا فملوا الجراء في طلق % وذاك ما لاتمله أبدك % 55(@)(@@) % أقسمت بالله والنبي لقد % % قضت مساعيك حق منولدك % 56(@)(@@) % يا من يؤم الوزيرمعتمدا % أبلغت خير البلاغ معتمدك % 57(@)(@@) % قل لأبي الصقر إن مثلت له % % واجمع لما أنت قائل حشدكص لا يعجب الناس أن تسودهم % % 58(@)(@@) % حق أياديك أن تطيل يدك % تالله تدري الأكف تشكر إط % % 59(@)(@@) % لاقك أصفادهن أم صفدك % ما نسأل الله أن تنال من الخيرا % % 60(@)(@@) % ت إلا عديد من حمدك % ينصرف الوفد يحمدون معا % PageV01P3209 61(@)(@@) % يومك فيهم ويأملون غدك % إن الذئاب التي تغير على النا % % 62(@)(@@) % س تناهت من خوفها أسدك % نصبت للسلمين محتسبا % 63(@)(@@) % كثر معطيكه به عددك % فقد أتى كل ما تراه من الأم % % 64(@)(@@) % ر رشادا وما عدا رشدك % لا زلت يا خير سيد عضدا % 65(@)(@@) % له ولا زال كائنا عضدك % وساخط ما رضيت قلت له % % 66(@)(@@) % ارض رضاه أو افترش ضمدك % عش في ذراه ودع عداوته % % 67(@)(@@) % وأنت في الخلد ترتعي رغدك % وإن تتابعت في شقاقكه % 68(@)(@@) % فاعددك في النار تصطلي وقدك % يا من يعادي السماء أن رفعت % 69(@)(@@) % كل خيرها تحتها ودع نكدك % ن % % PageV01P3210 البحر : - 1(@)(@@) % قل للأمير أدام الله نعماكا % % وزاد جدك إسعادا وأبقاكا % % 2(@)(@@) % يسقي السحاب فتحكيه فتشبهه % % ولا يشبه سقياه بسقياكا % % 3(@)(@@) % نضحت بالماء في يوم وقد نفحت % في عامه كله بالماء كفاكا % % 4(@)(@@) % وما أردت بإغباب الندى قسما % إجمام مالك بل إجمام 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms734# حسراكا % % 5(@)(@@) % اجممت حسرى آياديك التي ثقلت % على الكواهل حتى آدها ذاكا % % 6(@)(@@) % كي يستريحوا فيزدادوا براحتهم % % فضل اضطلاع بما تسدي يميناكا % % 7(@)(@@) % وما مللت العطايا فاسترحت إلى % % إغبابها بل هم ملوا عطاياكا % % 8(@)(@@) % وما نهتهم عن المرعى وخامته % % لكنه أسنق الراعين مرعاكا % % 9(@)(@@) % تدبر الناس ما دبرتهم فإذا % % عليهم لا على الأموال بقياكا % % 10(@)(@@) % أمسكت سيبك إضراء لرغبتهم % % وما بخلت وما أمسكت ممساكا % % PageV01P3211 11(@)(@@) % هذا على أن ظني فيك يخبرني % % أن قد أتيت من الإفضال مأتاكا % % 12(@)(@@) % وإن لهوت بنضح الماء آونة % فما أراه عن المعروف ألهاكا % % 13(@)(@@) % بل قد أقمت لعيد اللهو سنته % وما عدوت من الإحسان مجراكا % % 14(@)(@@) % لاشأن يلهيك عن شأن الندى أبدا % إلا نظير له من شأن تقواكا % % 15(@)(@@) % قد كنت أخطىء في أيام تهنئتي % % بالمهرجان وبالنيروز إياكا % % 16(@)(@@) % وكان أصوب من هذاك تهنئتي % % إياهما بك لو لقيت هذاكا % % 17(@)(@@) % إن الزمان الذي تحيا فتبلغه % يا بن الكرام لمغبوط بمحياكا % % 18(@)(@@) % فالآن أهدي إلى النيروز تهنئتي % % والمهرجان إذا آنا فزاراكا % % 19(@)(@@) % ليشكرا لك أن فخمت شأنهما % % عن غير ميل إلى الإلحاد حاشاكا % % 20(@)(@@) % لم تأت مأتاك في تعظيم قدرهما % % من باب دينك بل من باب دنياكا % % PageV01P3212 21(@)(@@) % كادا يقاسان بالعيدين إذ وسما % % بوسم يومين من أيام ملهاكا % % 22(@)(@@) % ليسا بعيدي صلاة غير أنهما % % عيدا نوال لمن يعتر جدواكا % % 23(@)(@@) % لراحتيك إذا وافى صباحهما % % جد وأنت تراه من هويناكا % % 24(@)(@@) % تعطي رغاب العطايا لاعبا فكها % وأنت تحي خلال الهزل هلاكا % % 25(@)(@@) % فمهرجانك والنيروز قد غدوا % % سيان عند ذوي التقوى وعيداكا % % 26(@)(@@) % إذ فيهما كل بر أنت فاعله % % في يوم فطرك أو في يوم أضحاكا % % PageV01P3213 البحر : - 1(@)(@@) % تكلمي في كمامك % سقيت كأس حمامك % 2(@)(@@) % فإن في فيك حشا % % يفوح عند كلامك % 3(@)(@@) % عوفيت دون الندامى % % من شمه بخشامك % 4(@)(@@) % ما أشتهي بعدو % أن يبتلى بلثامك % PageV01P3214 البحر : - 1(@)(@@) % رعاية حقنا حق عليكا % % لما نعتد من ميل إليكا % % 2(@)(@@) % ونصرك باسط النعمى علينا % % نهاية ما نؤمله لديكا % % 3(@)(@@) % فدونك من مودته نصيبا % رغيبا قد ملأت به يديكا % % 4(@)(@@) % أبا العباسلا تغلب عليه % % فقد أضحى ولم يغلب عليكا % % 5(@)(@@) % متى راعيته من جانبيه % % رعاك بعينه من جانبيكا % % 6(@)(@@) % ولم تعدم به سيفا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms735# ودرعا % كهمك عدة في حالتيكا % % 7(@)(@@) % ومثلك لا يدل على رشاد % كفاك بلمحة من ناظريكا % % 8(@)(@@) % أبا العباس قد أسديت فعلا % وصلت به إخاء مؤاخييكا % % 9(@)(@@) % وفيه فرصة لك فانتهزها % % فإن الله يكبت حاسديكا % % PageV01P3215 البحر : - 1(@)(@@) % أنلني أو ادللني على من ينيلني % % وتلك أشق الكلفتين عليكا % % 2(@)(@@) % متى ليت شعري أنت واجد واحد % تنيل يداه بعد منع يديكا % % 3(@)(@@) % أبى ذاك أن الخير منك معانه % وأن مشار العالمين إليكا % % 4(@)(@@) % يدي لامرىء يبغي النوال رهينة % متى ناله إن لم ينله لديكا % % 5(@)(@@) % % % PageV01P3216 البحر : - 1(@)(@@) % يفدي الأباعد من تلي ويليكا % % ويقي بناتك بالنفوس بنيكا % % 2(@)(@@) % ويقيك كلهم الحتوف ولم تمت % نفس تلاقي حتفها وتقيكا % % 3(@)(@@) % لم أفسر غريبها لك لكن % لامرئ يجهل الغريب سواكا % % 3(@)(@@) % لا تأسين لها فقد زوجتها % % كفؤا وضمنت الصداق مليكا % % 3(@)(@@) % إني لأرجو أن يكون صداقها % % من جنة الفردوس ما يرضيكا % % 3(@)(@@) % لا تبعدن كريمة أودعتهاإني لأرجو أن يكون صداقهامن جنة الفردوس ما يرضيكا لا تأسين لها فقد زوجتهاكفؤا وضمنت الصداق مليكا لم أفسر غريبها لك لكنلامرئ يجهل الغريب سواكا % % صهرا من الأصهار لا يخزيكا % % 4(@)(@@) % فعساها تمر بالعين ممن % ليس في العلم جاريا مجراكا % % 5(@)(@@) % فابسط العذر لي وأنت حميد % مع ما أنت باسط من نداكا % % 6(@)(@@) % أنت أعلى من أن تفات بعلم % % أو يداني مدى عليم مداكا % % PageV01P3217 البحر : - 1(@)(@@) % لما استقل بك الطريق إلى العدا % % لا زلت تسلك نحو رشد مسلكا % % 2(@)(@@) % غشيتك من نصر الإله سحابة % نالت حواشيها وليك زيركا % % 3(@)(@@) % فسما إلى الزنج الأخابث سموة % كانت لجمعهم هلاكا مهلكا % % 4(@)(@@) % وبكيدهم كيدوا له لا كيده % والله حينهم لذاك فأوشكا % % 5(@)(@@) % شبوا له نارا فأحرقهم بها % % ملك إذا طلب الأعادي أدركا % % 6(@)(@@) % كانت أحق من السيوف بأخذهم % فحمت مباح دمائهم أن تسفكا % % 7(@)(@@) % راموا بكيدهم ولي مظفر % لو كاده جبل إذا لتدكدكا % % 8(@)(@@) % واها لها عظة لهم ولغيرهم % حق امرؤ وعظته ألا يؤفكا % % 9(@)(@@) % فليصرف الصفار عنك عنانه % وليترك الغي المبين متركا % % 10(@)(@@) % وليبق أن أبقى على حوبائه % وعلى بقية شلوه أن تهتكا % % PageV01P3218 11(@)(@@) % فلقد رأى ما فيه معتبر له % % إن عبرة نفعت وإن قلب ذكا % % PageV01P3219 البحر : - 1(@)(@@) % سليمان مفسدة المملكه % فأهلكه الله 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms736# واستدركه % 2(@)(@@) % رعى طبرستان رعي المضي % % ع وهي إلى الحشر مستهلكه % 3(@)(@@) % وما كان برا على ضعفه % ولا فاجرا قبل ما أفتكه % % 4(@)(@@) % هو الأسد الورد في قصره % ولكنه ثعلب المعركه % 5(@)(@@) % وأحسب فرعون في كفره % % وهامان ما سلكا مسلكه % 6(@)(@@) % توقع لبغداد إذ ساسها % % زفافا فقد أصبحت مملكه % 7(@)(@@) % سيتبعها طبرستانها % % تصبر لذاك فما أوشكه % 8(@)(@@) % أتاها فزلزل أركانها % % وأشلى ابن أوس على الصعلكه % 9(@)(@@) % وقد كاد يهوي بهاعرشها % % ولكن تبارك من أمسكه % 10(@)(@@) % وجدت موليه ملقيا % بكلتا يديه إلى التهلكه % PageV01P3220 البحر : - 1(@)(@@) % أبا الصقر لا تدعني للبرا % % ز أو استعد كأقرانكا % % 2(@)(@@) % أرى النفس يقعد بي عزمها % % إذا ما هممت بإتيانكا % % 3(@)(@@) % لما وضع الدهر من همتي % % وما رفع الله من شأنكا % % 4(@)(@@) % أهابك هيبة مستعظم % لقدرك لا قدر سلطانكا % % 5(@)(@@) % وبعد فما حالتي حالة % أراني بها أهل غشيانكا % % 6(@)(@@) % فليس بعزمي نهوض إلي % % ك إن لم تعنه بأعوانكا % % 7(@)(@@) % ولو شئت قلت أقم راشدا % فلا ذنب لي بل لحرمانكا % % 8(@)(@@) % ولكن أبت لك ذاك العلا % % وطيب عصارة عيدانكا % % 9(@)(@@) % أزرني نوالك آنس به % % وأعتد عتادي للقيانكا % % 10(@)(@@) % فلست بأول من زاره % % من الأبعدين وجيرانكا % % PageV01P3221 11(@)(@@) % أترغب عن خلق فاضل % حمدناه عن بعض أخوانكا % % 12(@)(@@) % يسير السحاب بأثقاله % % وليس له رحب أعطانكا % % 13(@)(@@) % فيسقي منازلنا صوبه % وليس له مجد شيبانكا % % 14(@)(@@) % وما كان يمكن شيئا سوا % % ك فهو أحق بإمكانكا % % 15(@)(@@) % فقل لسحابك سر نحوه % % مغدا فجده بتهتانكا % % 16(@)(@@) % فكم سائل لك أغنيته % % وأوطانه غير أوطانكا % % 17(@)(@@) % وكم واهن الركن أنضته % % إليك بقوة أركانكا % % 18(@)(@@) % وقد كان مثلي ذا علة % ولكن أزيحت بإحسانكا % % 19(@)(@@) % وسنة مجدك أن تستقى % % سجال نداك بأشطانكا % % 20(@)(@@) % برفدك ينهض من يرتجي % % لديك الغنى وبحملانكا % % PageV01P3222 21(@)(@@) % لذلك يثني عليك الورى % % بأطيب من ريح أردانكا % % PageV01P3223 البحر : - 1(@)(@@) % نادمت بدر السماء في فلكه % % أجزل بحظ الولي من ملكه % 2(@)(@@) % نادمته والحظوظ نافرة % فاصددت وحشيهن في شركه % % 3(@)(@@) % من بعد ما خاس بي وأسلمني % % طوعا إلى الدهر ضامنو دركه % 4(@)(@@) % هتفت للدهر باسم قاسمه % فانهزم الدهر وهو في شككه % 5(@)(@@) % القاسم القاسم الرفاد إذا % % أيأس ضرع المدر من حشكه % 6(@)(@@) % أبي الحسين الذي به حسن الس % سلطان وابيض بعدما حلكه % 7(@)(@@) % فتى له منظر 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms737# ومختبر % صاغهما الله من حلى فلكه % 8(@)(@@) % حديث سن كبير معرفة % محتك قبل حين محتنكه % 9(@)(@@) % يعارك الحول الأريب به % ليث تفادي الليوث من عركه % % 10(@)(@@) % صيغ الحجا من سكونه صيغا % % راقت وصيغ الذكاء من حركه % PageV01P3224 11(@)(@@) % يجمع ضدين من جلالته % % في كل قلب ولطف منسلكه % 12(@)(@@) % مستحكم الرأي غير مخدجه % مصمم العزم غير مرتبكه % % 13(@)(@@) % قد حاز ما في الشباب من أنق ال % % حسن وما في المشيب من حنكه % % 14(@)(@@) % فهو رضي العين حين تبصره % % والرأي عفوا وبعد معتركه % % 15(@)(@@) % جاهر به الملك والملوك معا % ولا تستره خوف منتهكه % % 16(@)(@@) % أخو فعال كأن زهر نجو % % م الليل مطبوعة على سككه % % 17(@)(@@) % مشترك الحظ لا محصله % % محصل المجد غير مشتركه % % 18(@)(@@) % منتهك المال لا ممنعه % % ممنع العرض غير منتهكه % % 19(@)(@@) % يحلو على سمعه السؤال وما % % زالتنعمحلوة على حنكه % % 20(@)(@@) % كأنما القطر من ندى يده % % والبرق من بشره ومن ضحكه % % PageV01P3225 21(@)(@@) % لم يجعل الغدر للوفاء أخا % مذ كان في فتكه ولا نسكه % % 22(@)(@@) % طبيعة لاتزالتخلصها ال % % أياموالتبر عند منسبكه % % 23(@)(@@) % كم حسنات له مشهرة % % أسرها ما استطاع من ملكه % % 24(@)(@@) % صيرني جوده إلى فسح ال % % عيش فأغنيت طالبي مسكه % % 25(@)(@@) % في منزل بر كل بادية % % من صحنه والبحار من بركه % % 26(@)(@@) % تصبحني فيه كل شارقة % % جدوى حثيث النوال مدركه % % 27(@)(@@) % أقاتل الحر في غلائله % والقر في خزه وفي فنكه % 28(@)(@@) % لو دوني البحر جاء نائله % أسبح من فلكه ومن سمكه % % 29(@)(@@) % يا بن عبيد الإله يا بن أبي القا % % سم شافي السلطان من نهكه % % 30(@)(@@) % يا بن الوزير السديد منزعه % برغم أنف العدا ومؤتفكه % % PageV01P3226 31(@)(@@) % يا بن الذي أصبحت مآثره % من ضحكات الزمان بعد ضحكه % % 32(@)(@@) % الجامع الشمل بعد فرقته % % والواصل الحبل بعد منبتكه % % 33(@)(@@) % شكريك فرض ولست بالغه % % ولست في حالة بمتركه % % 34(@)(@@) % خذها تهادي إليك طائعة % مثل تهادي الغدير في حبكه % % 35(@)(@@) % نعماك في منزلي مخيمة % والشعر في نصه وفي رتكه % % PageV01P3227 البحر : - 1(@)(@@) % أعوذ بحقويك العزيزين أن أرى % % مقرا بضيم يترك الوجه حالكا % % 2(@)(@@) % ولي وطين آليت ألا أبيعه % وألا أرى غيري له الدهر مالكا % % 3(@)(@@) % عهدت به شرخ الشباب ونعمة % كنعمة قوم أصبحوا في ظلالكا % % 4(@)(@@) % فقد ألفته النفس حتى 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms738# كأنه % % لها جسد إن بان غودرت هالكا % % 5(@)(@@) % وحبب أوطان الرجال إليهم % مآرب قضاها الشباب هنالكا % % 6(@)(@@) % إذا ذكروا أوطانهم ذكرته % % عهود الصبا فيها فحنوا لذلكا % % 7(@)(@@) % وقد ضامني فيه لئيم وعزني % % وها أنا منه معصم بحبالكا % % 8(@)(@@) % وأحدث أحداثا أضرت بمنزلي % % يريغ إلى بيعيه منه المسالكا % % 9(@)(@@) % وراغمني فيما أتى من ظلامتي % % وقال لياجهد في جهد احتيالكا % % 10(@)(@@) % فما هو إلا نسجك الشعر سادرا % وما الشعر إلا ضلة من ضلالكا % % PageV01P3228 11(@)(@@) % مقالة وغد مثله قال مثلها % % وما زال قوالا خلاف مقالكا % % 12(@)(@@) % صدوفا عن الخيرات لا يرأم العلا % % ولا يحتذي في صالح بمثالكا % % 13(@)(@@) % من القوم لا يرعون حقا لشاعر % ولا تقتدي أفعالهم بفعالكا % % 14(@)(@@) % يعير سوال الملوك ولم يكن % % بعار على الأحرار مثل سؤالكا % % 15(@)(@@) % مدلا بمال لم يصبه بحله % % وحق جلال الله ثم جلالكا % % 16(@)(@@) % وحسبي عن إثم الألية زاجر % بما امتلأت عيني به من جمالكا % % 17(@)(@@) % وإني وإن أضحى مدلا بماله % % لآمل أن ألفى مدلا بمالكا % % 18(@)(@@) % فإن أخطأتني من يمينيك نعمة % فلا تخطئنه نقمة من شمالكا % % 19(@)(@@) % فكم لقي العافون عودا وبدأة % نوالك والعادون مر نكالكا % % 20(@)(@@) % وقد قلت للأعداء لما تظاهروا % % علي وقد أوعدتهم بصيالكا % % PageV01P3229 21(@)(@@) % حذار سهامي المصميات ولم تكن % % لتشوى إن نصلتها بنصالكا % % 22(@)(@@) % وما كنت أخشى أن أسام هضيمة % وخداي نعلا بدلة من نعالكا % % 23(@)(@@) % فجل عن المظلوم كل ظلامة % وقتك نفوس الكاشحين المهالكا % % 24(@)(@@) % وتلك نفوس لو عرضن على الردى % % فداء رأى ألا تفي بقبالكا % % PageV01P3230 البحر : - 1(@)(@@) % رق آب وما ترق لعبدك % من جوى قلبه ومن طول صدك % 2(@)(@@) % ومن الجور أن يسالم قلبي % % حد آب وأن يشاك بحدك % % 3(@)(@@) % حال شهر مذمم عن سجايا % % ه وما حلت عن تنكر عهدك % 4(@)(@@) % أحمد الله ما كذا وعدتني % % عنك فحواك من وثاقة عقدك % % 5(@)(@@) % قد عرفنا مقدار سخطك فاجهد % أن نرى العفو منك أيسر جهدك % % 6(@)(@@) % إن خلف الوعيد ليس بعار % لكن العار كله خلف وعدك % % 7(@)(@@) % ولقد كان في عداتك عفو % واغتفار يستنطقاني بحمدك % % 8(@)(@@) % فاعف عنيتخلفي واختلالي % % عفوك الحر والق غيي برشدك % % 9(@)(@@) % قد فعلت القبيح وهو شبيهي % % خطأ فافعل الجميل بعمدك % % 10(@)(@@) % وفدت رغبتي إليك وما زل % % ت 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms739# تحيي بالنجح أوجه وفدك % % PageV01P3231 البحر : - 1(@)(@@) % إن ائتمانك آفات الزمان على % % نفس تمر بها لوعات هجرانك % 2(@)(@@) % لشاهد حالف للحالفين لها % % بأن سرك فيه مثل إعلانك % 3(@)(@@) % قد أوبقتني ذنوب لست أعرفها % % فاجعل تغمدها من بعض إحسانك % 4(@)(@@) % وارفق بنفس فلم تعمه وأن % جهلتمقدار زلتها مقدارغفرانك % % 5(@)(@@) % فإن أبيت لأيمان مؤكدة % فبذلك العفو كفارات أيمانك % % 6(@)(@@) % عاقبتني بعقاب لا أقوم له % % وأنت تحرج من تقويم غلمانك % % 7(@)(@@) % لا تجعلني قذاة الكأس مقلية % بعد اعتدادي من منفوس ريحانك % % 8(@)(@@) % واذكر وقيت من النسيان أسوأة % % كوني سرورك في أيام أحزانك % % 9(@)(@@) % أيام آتيك ندمانا فتقبلني % % ولا ترى أن ندمانا كندمانك % % 10(@)(@@) % عفوا فإننا عبيد إن صمدت لنا % % بالجد قاتلت منا غير أقرانك % % PageV01P3232 11(@)(@@) % بحق من أنت راجيه وخائفه % جد باغتفار واخمد بعض نيرانك % % 12(@)(@@) % وزن ذنوبي بما أسلفت من حسن % فإنني لست أخشى ظلم ميزانك % % PageV01P3233 البحر : - 1(@)(@@) % اشرب على ذكر الأحبة إنهم % % عما قليل قادمون عليكا % % 2(@)(@@) % لاتنسينهم فإن لديهم % شوقا وشوقا للحديث إليكا % % 3(@)(@@) % وكأنني بهم إليك وإنما % % شمس النهار بهم هناك لديكا % % 4(@)(@@) % ولقد ملأت يديهم بك غبطة % ولقد ملأت بهم كذاك يديكا % % PageV01P3234 البحر : - 1(@)(@@) % أقسمت أن أخا نفاكا % % قد بر مجتهدا أباكا % % 2(@)(@@) % أحياه حين نفاك عن % % ه وكان قد لقي الهلاكا % % 3(@)(@@) % فكأنه عيسى المسي % % ح ونشره الموتى بذاكا % % 4(@)(@@) % وكأنك الدجال من % % عور وإعوار هناكا % % PageV01P3235 البحر : - 1(@)(@@) % أنا شبه لخدكا % % ورسول لعبدكا % % PageV01P3236 البحر : - 1(@)(@@) % أنى تشاغلت عن أبي حسنك % مستفسدا ما امتننت من مننك % 2(@)(@@) % أي جناياته اضطغنت له % % فليس هذا أوان مضطغنك % 3(@)(@@) % ياقادما سرني بمقدمه % % قد ساءني ما أراه من ظعنك % 4(@)(@@) % أشكيتني بعد نعمة حسمت % شكواي صرف الزمان في زمنك % 5(@)(@@) % تركتني ضاحيا بمرتمض % وكنت تحت الظليل من فننك % 6(@)(@@) % ياأعذب الماء لم أسنت على % % من حقه أن يعاذ من أسنك % % 7(@)(@@) % من ذا تنصحت من ثقاتك في % % صرمي وماذا أطعت من ظننك % % 8(@)(@@) % لأي جرم غدوت تلفظني % % وكنت أحلى لديك من وسنك % % 9(@)(@@) % متى تقاعست عن لجامك أو % % خلعت رأس المطيع من رسنك % % 10(@)(@@) % ألم أكن في حروبك البطل ال % % مبلى والمستشار في هدنك % % PageV01P3237 11(@)(@@) % ألم أكن من سيوفك القلعي % % اتوإن شئت كنت من جننك 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms740# % % 12(@)(@@) % مبتذلا أنفسي وممتهنا % نفسي فيما هويت من مهنك % % 13(@)(@@) % يا واسع العفو والمذاهب في ال % % إفضال أين الرحيب من عطنك % % 14(@)(@@) % إلا يكن ما امتننت من منن % في منتي حملها ففي مننك % % 15(@)(@@) % يا حسن الخلق والخلائق وال % % أفعال أنى عدلت عن سننك % % 16(@)(@@) % إن كنت أخطأت أو أسأت فلا % % يظهر قبيحي كذا على حسنك % % 17(@)(@@) % غلب عليه جميل فعلك بي % % إن هناتي تغيب في شحنك % % 18(@)(@@) % أعيننا سيد لأحوصنا % % منك ومني فعد عن إحنك % % 19(@)(@@) % إن كان غاب الصواب عن حوصي % % فلن يغيب الجميل عن عينك % % 20(@)(@@) % يا عجبا من لئيم ممتحني % % إن عز يوما كريم ممتحنك % % PageV01P3238 21(@)(@@) % قد زاد في شكواي إطراحك إي % % ياي وما كان ذاك من سننك % % 22(@)(@@) % الحمد لله كنت من فتني % % ولم أكن عند ذاك من فتنك % % 23(@)(@@) % أصبحت فيما يعد من شجني % % ولست فيما يعد من شجنك % % 24(@)(@@) % طالت شكاتي فما اكترثت ولا % % ألجات كف الأسى إلى ذقنك % % 25(@)(@@) % بل ظلت تستعرض البقاع ولا % % تسخى بتعريجة إلى سكنك % 26(@)(@@) % موضع أسرارك التي سترت % وزيرك المرتضي ومؤتمنك % 27(@)(@@) % ياحسرتا ما أحطت معرفة % بأن شجوي يزيد في أرنك % % 28(@)(@@) % وكنت أستوهب الإله ضنى % لا بل نحولا يزيد في سمنك % % 29(@)(@@) % ياشاعرا يرعوي لدمنته % % هلا جعلت الصديق من دمنك % % 30(@)(@@) % أما تلقنت عن أئمتك الزه % % ر بذاك الصحيح من لعنك % % PageV01P3239 31(@)(@@) % إن أحق امرىء حزنت له % % من يستعيذ الإله من حزنك % % 32(@)(@@) % إن تك قد بعتني فمن غبنى % % أبكى وأبكي وليس من غبنك % % 33(@)(@@) % تعتاض مني وليس لي عوض % منك متى ما خرجت من قرنك % % 34(@)(@@) % وأي شيء أدق من ثمني % % وأي شيء أجل من ثمنك % % 35(@)(@@) % قد ارتهنت الفؤاد عندك فاح % % فظه وأحسن جوار مرتهنك % % 36(@)(@@) % لاتمتحني بمنع وجهك عيني % ي فلا صبر لي على محنك % % 37(@)(@@) % ليس من العدل أن تعذبني % % بالهجر بعد الظهور في زينك % % 38(@)(@@) % ونائل منك قلت حسبي بال % % له إلها فاعكف على وثنك % % 39(@)(@@) % لست ترى الشمس غير مظلمة % فلا انجلى ناظراك من كمنك % % 40(@)(@@) % ولفك الله في لفائف غما % % ئك حتى تلف في كفنك % % PageV01P3240 41(@)(@@) % ذاك جواد أراك مجتهدا % تطلبه واطئا على ثننك % % 42(@)(@@) % ياعجبا من مفاخر حمق % يقيس 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms741# أحفاشه إلى حضنك % % 43(@)(@@) % أنى يساميك في صليبة أح % % رارك أو معتفيك من يمنك % 44(@)(@@) % ومن يسامي امرأ ومعتقه % كسيف المقول آبن ذي يزنك % % 45(@)(@@) % دونكها ناظرا بغفلتك الحر % رة لا الألمعي من طبنك % % 46(@)(@@) % واعذر حميدا إذا أذنت لها % % واغفر خطيئاتها لدى أذنك % 47(@)(@@) % يقول فيك المديح قائلنا % % وأين ذاك الضياح من لبنك % % 48(@)(@@) % فيغتدي سبحة لفيك ولو % % شئت بحق لكان من لعنك % % 49(@)(@@) % عجبت من ناسج نسائجه % جهز أبراده إلى عدنك % % 50(@)(@@) % لا بل من العادلين عنك وإن % % حاكوا خلاف الرضي من يمنك % % PageV01P3241 51(@)(@@) % يهدى لك الآبدات ممتدح % وإنما الآبدات من فطنك % % 52(@)(@@) % فتكتسيهن ماجدا عطرالط % % طينة لا يشتكين من درنك % % 53(@)(@@) % طوبى لمهد إليك خلعته % طوبى لمنشورة على بدنك % % 54(@)(@@) % لازلت للناس موردا غدقا % دلوك للمستقين في شطنك % % 55(@)(@@) % تقرضنا العرف بالثناء وتع % % تد زكي القروض من عينك % % 56(@)(@@) % كم غربة آنستك في وطن % للمجد آثرتها على وطنك % % 57(@)(@@) % علمت أن الخيار في بطن ال % % أضياف فاخترتها على بطنك % % 58(@)(@@) % أقول للدهر إذ بصرت بمك % % نونك مثل الجميل من علنك % % 59(@)(@@) % يادهر زوجه من كرائمك الن % نعماء وادفع أذاك عن ختنك % % 60(@)(@@) % قدحي فقير إلى رياشك مس % % تغن بما قد براه من سفنك % % PageV01P3242 61(@)(@@) % فامنحني العطف في جوابك لي % % واعفني إن رأيت من لسنك % % PageV01P3243 البحر : - 1(@)(@@) % لا عرتك الخطوب يابن حريث % لا ولا نالك الفناء الوشيك % 2(@)(@@) % فلعمري ماحاتم بمدان % لك لولا الشنار والتهتيك % 3(@)(@@) % أنت شيخ عطاؤه حيوان % إذ عطاياهم الجماد السبيك % 4(@)(@@) % ياضعيفا في رأسه ألف قرن % عددا كلها غليظ سميك % % 5(@)(@@) % يا فتى حين يلبس الكشخ غر % وبه دون فلسه تحنيك % % 6(@)(@@) % لم تزل نسوة لديه قراه % منذ ناغى ثديها التفليك % % 7(@)(@@) % ليم في أخته فقال مجيبا % تلك نعل وحقها التشريك % % 8(@)(@@) % منح الله جدة الشرك الشي % % خ ولا انفك ذلك التفكيك % % 9(@)(@@) % هكذا يفضح الرجال لعمري % % وكذا يحلم السفيه الركيك % % 10(@)(@@) % ولقد لامها فأربت عليه % % ورقاه في مثلها لا تحيك % % PageV01P3244 11(@)(@@) % قال مالي متى حبلت فقالت % % لك لطم أخفه التتريك % % 12(@)(@@) % تلك أخت فمن بلاك بعرس % قل لنا أيها السمين الوديك % % 13(@)(@@) % بع بنانا فأنت عنها غني % إنما يقتني الدجاجة ديك % % 14(@)(@@) % لا وجردانك المطل عليه 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms742# % % ذلك البطن لا استطعت . . . % 15(@)(@@) % ومحال قبول عرسك منك ال % % خسف مالم يشركك فيها شريك % % 16(@)(@@) % ملكتها الفحول دونك يا شي % % خ جهارا ولم يقع تمليك % % 17(@)(@@) % ليبرد حشاك أن شواها % % فوق أعناقهم وأنت المليك % % 18(@)(@@) % وليسكن جواك إذ حلقته % % أن سيدمي خصاهم التشويك % % 19(@)(@@) % قد صدقناك عن بنانك يا شي % % خ فلا يستفزك التشكيك % % 20(@)(@@) % كل يوم لها بغيرك عرس % لك منه الدعاء والتبريك % % PageV01P3245 21(@)(@@) % ولماذا تردها عن هواها % % جثة فدمة وعقل نهيك % % 22(@)(@@) % وقرون يسير في سمكها القم % % ل حثاثا والسير حول دكيك % % 23(@)(@@) % هي في شأنها وأنت فريد % في هوان ضجيعك التدليك % 24(@)(@@) % يا ثقيل القرون يا جبل العا % % ر أما يستفزك التحريك % PageV01P3246 البحر : - 1(@)(@@) % وكنت إذا أنفذت فيك قصيدة % فأنجزتها استغفرت ربي هنالكا % % 2(@)(@@) % فيحسب قومي ذاك مني تأثما % ومن خشية التقصير أفعل ذلكا % % PageV01P3247 البحر : - 1(@)(@@) % أستغفر الله من هجائيكا % % وليس هاجيك آثما فيكا % % 2(@)(@@) % لكنني أتقي وأشفق من % % تقصير ما قلت عن مخازيكا % % 3(@)(@@) % يا خالد اللؤم غير مؤتشب % % سبقت باللؤم من يجاريكا % % 4(@)(@@) % أنت صريح اللئام لا كذبا % وهم إذا حصلوا مواليكا % % PageV01P3248 البحر : - 1(@)(@@) % أصبحت يابن حريث اللؤم مرتبكا % مثل الغطاطة في أنشوطة الشرك % % 2(@)(@@) % فإن نزت نشقت فيها أو اختنقت % وإن ونت وتراخت فهي للدرك % 3(@)(@@) % فلا السكون ينجيها متى سكنت % ولا ينفس عنها شدة الحرك % 4(@)(@@) % كذاك أنت إذا استحميتني ابتركت % % فيك القوافي ابتراكا غير مترك % 5(@)(@@) % وإن سكت ذليلا غير منتصر % ورتك وارية الأحقاد والحسك % PageV01P3249 البحر : - 1(@)(@@) % يايوم إسحاق بن عبد الملك % % لم تبق لي صبرا ولم تترك % 2(@)(@@) % يايوم إسحاق الذي غاله % أي حريم لي لم تنتهك % 3(@)(@@) % جرعتني دون الورى ثكله % بل كلهم في ثكله مشترك % 4(@)(@@) % من ذا الذي لم يبكه فقده % من حدث غر ومن محتنك % 5(@)(@@) % لما أتاني نعيه بغتة % كاد حجاب القلب أن ينهتك % 6(@)(@@) % كيف عزائي عن فتى لا يرى % % شبيهه في أي فج سلك % % 7(@)(@@) % كأنه في كل أحواله % من ذهب لا شك فيه سبك % % 8(@)(@@) % يالهف نفسي أن أرى يومه % % وأن أرى بيتا له ما سمك % % 9(@)(@@) % يالهف نفسي أن أرى ماله % % مقتسما من بعده قد ملك % % 10(@)(@@) % مال امرىء ما كان قفلا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms743# له % % بل كان في تفريقه منهمك % % PageV01P3250 11(@)(@@) % سقيا لأخلاق له لا ترى % % في سوقة الناس ولا في ملك % % 12(@)(@@) % أي سماح ضم في قبره % وماء وجه في ثراه سفك % 13(@)(@@) % مضى ولم يفتك به إذ مضى % % لكن بروحي وبجسمي فتك % % 14(@)(@@) % قد كان حسبي من بني آدم % لو أنه عمر لي أو ترك % % 15(@)(@@) % ياقمرا كان إذا ما بدا % % بين نجوم الليل لم تشتبك % % 16(@)(@@) % أصبحت مذ غيبت عن ناظري % % كأنني في حيرة مرتبك % % 17(@)(@@) % يرحمك الرحمن من هالك % % لو تقبل الفدية غاليت بك % % PageV01P3251 البحر : - 1(@)(@@) % غدا كل ذي شعر يدل بشعره % ومالي إدلال بغير نداكا % % 2(@)(@@) % رجوت رجائي فيك لاببلاغتي % % ولكن بجود حالفته يداكا % % 3(@)(@@) % على أن ذا الإبلاغ فيك رأيته % % إذا هو أسرى يهتدي بهداكا % % 4(@)(@@) % فليس بمحمود لأن صوابه % جدا منك يأتيه أمام جداكا % % 5(@)(@@) % وما حمد من سددته ورفدته % % وما قال إلا مايقول عداكا % % 6(@)(@@) % وماقولهم إلا الجميل لأنهم % % متى أهجروا كذبتهم بسداكا % % PageV01P3252 البحر : - 1(@)(@@) % شهر القيام وإن عظمت حرمته % % شهر طويل ثقيل الظل والحركه % 2(@)(@@) % يمشي الهوينا وأما حين يطلبنا % % فلا السليك يدانيه ولا السلكه % % 3(@)(@@) % كأنه طالب ثأرا على فرس % أجد في إثرمطلوب على رمكه % 4(@)(@@) % أذمه غير وقت فيه أحمده % منذ العشاء إليه أن تسقع الديكه % 5(@)(@@) % وكيف أحمد أوقاتا مذممة % بين الدؤوب وبين الجوع مشتركه % 6(@)(@@) % ياصدق من قال أيام مباركة % % إن كان يكنى عن اسم الطول بالبركه % 7(@)(@@) % لو كان عمري طريقا مالقيت به % % إلا الصيام وإلا شهره نبكه % 8(@)(@@) % شهر كأن وقوعي فيه من قلقي % % وسوء حالي وقوع الحوت في الشبكه % 9(@)(@@) % لو كان مولى وكنا كالعبيد له % % لكان مولى بخيلا سيىء الملكه % 10(@)(@@) % قد كاد لولا دفاع الله يسلمنا % % إلى الردى ويؤدينا إلى الهلكه % % PageV01P3253 البحر : - 1(@)(@@) % ما أحسن العفو من المالك % لا سيما عن هائم هالك % 2(@)(@@) % ياأيها السالك من مهجتي % % مسالكا أعيت على السالك % % 3(@)(@@) % محكت في هجرك لي ظالما % ولست في حبك بالماحك % % 4(@)(@@) % ياقمرا أوفى على سروة % وسروة أوفت على عانك % % 5(@)(@@) % عبدك منهوك بسقم الهوى % % فداوه من سقمك الناهك % % 6(@)(@@) % كم قد شكا منك إلى ذاهل % وكم بكى منك إلى ضاحك % 7(@)(@@) % ثم غدا من 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms744# بعد ذا كله % % أعطف مملوك على مالك % % 8(@)(@@) % كذبت مني مدمعا صادقا % لقول واش كاذب آفك % % 9(@)(@@) % فصرت تلقاني على ذلتي % % بمثل حد الصارم الباتك % % 10(@)(@@) % يافضة بيضاء مسبوكة % جادت وصفتها يد السابك % % PageV01P3254 11(@)(@@) % بالصبح من غرتك المجتلى % % والليل من طرتك الحالك % 12(@)(@@) % لاتتركني رحمة بعدما % % هتكتني أفديك من هاتك % 13(@)(@@) % يكفيك أن أصبحت ياسيدي % % أحدوثة الناسك والفاتك % 14(@)(@@) % لا لذة الفاتك موجودة % عندي ولا لي سلوة الناسك % % 15(@)(@@) % تركتني فردا فكم قائل % ياشغف المتروك بالتارك % % 16(@)(@@) % أصبحت أهواك وأنت الذي % % ما لدمي غيرك من سافك % % PageV01P3255 البحر : - 1(@)(@@) % إذا ما مدحت المرء تطلب رفده % % ولم ترج فيه الخير إلابذلكا % % 2(@)(@@) % فأنت له أهجى البرية نية % وإن كنت قد أطريته في مقالكا % % 3(@)(@@) % وأمدح ماتلفى لمن أنت سائل % إذا ماطرحت المدح عند سؤالكا % % 4(@)(@@) % وطالبت جدواه بغير وسيلة % كما طالبت يمناك ما في شمالكا % % 5(@)(@@) % مدلا عليه واثقا بسماحه % ترى ماله دلا عليه كمالكا % % 6(@)(@@) % هل المدح إلا تركك المدح ملقيا % على كرم المسئول عبء اتكالكا % % 7(@)(@@) % ترى جوده يغنيك عن كل وصلة % وعن كل ماتدلى به من حبالكا % % 8(@)(@@) % ولا تتمارى في إحاطة علمه % بمكنون ما أخطرت فيه ببالكا % % 9(@)(@@) % فتمدحه بالفهم والجود صامتا % ولم يحتفل ذو منطق كاحتفالكا % % 10(@)(@@) % هنالك أسمعت القلوب مديحه % وإن أنت لم تسمعه أذنا هنالكا % % PageV01P3256 11(@)(@@) % مديحا يعيه القلب لا السمع سالكا % مسالك ليس القول فيهن سالكا % % PageV01P3257 البحر : - 1(@)(@@) % يا أبا العباس قرض % لي مد حين لديكا % % 2(@)(@@) % وقضاء الفرض فرض % ياأخا المجد عليكا % % 3(@)(@@) % فاقضني دينا حميدا % مكن الله يديكا % % 4(@)(@@) % حق بالإنصاف خصم % رفع العدوى إليكا % % PageV01P3258 البحر : - 1(@)(@@) % أنجز الوعد إن خير مواعي % % دك ماجاء خلفه مصداقك % 2(@)(@@) % لاتدع من وعدته حين تل % % قاه قذاة تجيلها آماقك % % 3(@)(@@) % هو بغل وعدتنيه فإن أخ % لفت ضاهت أخلاقه أخلاقك % % 4(@)(@@) % فاتق الله أن يشينك خلف % فالمعالي وأهلها عشاقك % % 5(@)(@@) % لاتلون تلون البغل في البغ % % ل ولا يختلف علي مذاقك % % 6(@)(@@) % فيسير القصيد فيك بذم % مرمض جره لك استحقاقك % % 7(@)(@@) % إن طول المطال يغري بإرها % % قك من لا يسره إرهاقك % % 8(@)(@@) % فتخير من اثنتين ولا يغ % لق عليك المذاهب استغلافك % % 9(@)(@@) % قودك البغل أو إباقك في ال % % أرض عليه 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms745# وأين مني إباقك % % 10(@)(@@) % والقوافي إذا طلبنك يوما % غير ما معجز لهن لحاقك % % PageV01P3259 11(@)(@@) % ليس مني وإن فررت مفر % أنا شيء إليه منه مساقك % % 12(@)(@@) % لاسلاليمك الطوال تنجي % % ك من سطوتي ولا أنفاقك % % 13(@)(@@) % إن خيرا من ارتفاقك بالبغ % % ل إذا عدت الأمور ارتفاقك % % 14(@)(@@) % شكر حر إذا جرى بك شأوا % نحو علياء برزت أطلاقك % % 15(@)(@@) % أو لحقت المبرزين فأصبح % ت قليلا إلى العلا سباقك % 16(@)(@@) % يبلغ الشكر والثناء بك الغا % % ية لا ينتهي إليها عتاقك % % 17(@)(@@) % وبنات الحمير أولى بتحلي % % فك عنها إذا مرتهن ساقك % % 18(@)(@@) % ليت شعري وأنت غيث مغيث % % دائم للمؤملين انبعاقك % % 19(@)(@@) % واحد في الفعال يغرق مدا % % حك من قبل أن يرى إغراقك % % 20(@)(@@) % هل يرى الناس بعدما حققوني % % بك حتى لقيل لي إسحاقك % PageV01P3260 21(@)(@@) % أن قدري لديك منعي بغلا % ذاك أمر أبته لي أعراقك % % 22(@)(@@) % من أخف خلفه فما زال ميعا % % دك عندي كأنه ميثاقك % 23(@)(@@) % فاهتك المطل بالوفاء كما يه % % تك محلولك الدجى إشراقك % 24(@)(@@) % لست ممن له وثاق من البخ % ل فادعو بأن يفك وثاقك % % 25(@)(@@) % قد قرضناك في التقاضي بمزح % ليس من مثله يضيق خناقك % % 26(@)(@@) % فاحتملنا فكم سماح وحلم % % واحتمال يظل منها رواقك % PageV01P3261 البحر : - 1(@)(@@) % لم يظلم الدهر أن توالت % فيكم مصيباته داركا % % 2(@)(@@) % كنتم تجيرون من يعادي % % منه فعاداكم لذاكا % % PageV01P3262 البحر : - 1(@)(@@) % قل للمسود حين شيب هكذا % % غش الغواني في الهوى إياكا % % 2(@)(@@) % كذب الغواني في سواد عذاره % % فكذبنه في ودهن كذاكا % % PageV01P3263 البحر : - 1(@)(@@) % أيها الأعور لم جشمتني % % أن أشق الرمس عن والدتك % 2(@)(@@) % بئسما بدلتها في لحدها % % بالذي رجته من عائدتك % 3(@)(@@) % إن تكن ثبجت شعري ظالما % فرماك الله في واحدتك % % 4(@)(@@) % بظلام تسلم الكف له % % أبد الدهر إلى قائدتك % % 5(@)(@@) % قد رمينا ما تبردت به % % بلظى ذوب من جامدتك % % 6(@)(@@) % بدرت بادرة من شرري % % ألهبت ناري في خامدتك % % 7(@)(@@) % بعدما أترز أرواح الورى % % بردما لاقوه من واردتك % % 8(@)(@@) % فاستعاذوا لك من بادرتي % % واستعاذوا بي من بادرتك % % PageV01P3264 البحر : - 1(@)(@@) % أيا بن المعلى ولا تكن % % حريصا على تضييعك اسم أبيكا % % 2(@)(@@) % وصدق أناسا فضلوك فأطنبوا % % وكذب من الحساد منتقصيكا % % 3(@)(@@) % منحتك مصباحا فأعشاك ضوؤه % وقد كان ظني أنه سيريكا % % 4(@)(@@) % جعلتك في حظ 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms746# شريكا فخنتني % % ولو شئت لم أجعلك فيه شريكا % % 5(@)(@@) % أمن حبك الأداب خالفت حكمها % % فخنت بظهر الغيب مؤتمنيكا % % 6(@)(@@) % نسخت كتابي ثم كافأت نسخه % بتضييعه أخلفت ظني فيكا % % 7(@)(@@) % فقلت أعرني مانسخت أرده % % على إثر نسخيه فلم ترتيكا % % 8(@)(@@) % فقلت فكلف من رأيت انتساخه % فماطلتني حولا بذاك دكيكا % % 9(@)(@@) % أفق أيها النشوان قبل ملامة % تعضك أطراف البنان وشيكا % % 10(@)(@@) % أيرضى معير من كتاب بنسخه % % وتأبى عليه ذاك جرت مليكا % % PageV01P3265 11(@)(@@) % فلا تك إما خائنا أو مضيعا % ولكن أمينا حافظا كذويكا % % 12(@)(@@) % ووكل يديك السمحتين بحاجتي % % وهب لي يوما من شهور سنيكا % % 13(@)(@@) % وقس راحة تجني عليك مسبة % بمتعبة تحميكها وتقيكا % % 14(@)(@@) % أخوك فلا تجعله ضدك والتمس % لضدك ما يلفى له كأخيكا % % PageV01P3266 البحر : - 1(@)(@@) % أبق من مالك الممز % زق حظا لآملك % 2(@)(@@) % ما من العدل والتقى % % أن ترى قتل سائلك % 3(@)(@@) % أنا إن مت لا أشك % % ك قتيل لنائلك % 4(@)(@@) % أيها البحر طال بي % % ظمئي في سواحلك % % 5(@)(@@) % كم ترى العين حسرة % ريها في جداولك % % 6(@)(@@) % سيدي كم تذودني % % حرمتي عن مناهلك % % 7(@)(@@) % قد غدا كل معدم % % واجدا من فواضلك % % 8(@)(@@) % مثلما كل واحد % معدم من فضائلك % % 9(@)(@@) % غير حر منعته % فرضه من نوافلك % % 10(@)(@@) % خائف أن ينال جو % % دك قصوى عقائلك % % PageV01P3267 11(@)(@@) % وهو في غير طائل % فأغثه بطائلك % % 12(@)(@@) % لا تلمه فإنه % % خائف من أناملك % % 13(@)(@@) % إنما خاف من سما % % حك لا من غوائلك % % PageV01P3268 البحر : - 1(@)(@@) % غصن من الأبنوس ركب في % % مؤتزر معجب ومنتطق % 2(@)(@@) % ألا يابن القنوط عجبت جدا % لمستدعاك شري والتماسك % 3(@)(@@) % وكيف طمعت في استضعاف ليث % مخالبه شوارع لاختلاسك % % 4(@)(@@) % وثبت على الهزبر وأنت كلب % ولم تحسبه ينشط لافتراسك % 5(@)(@@) % فدونك قد بليت به مليئا % بحطم قناة ظهرك وانتهاسك % 6(@)(@@) % وكنت مكلفا تعتس شرا % فقد صادفت حتفك في اعتساسك % % 7(@)(@@) % وأجدر باحتراقك حين تعشو % % إلى نار وأبعد باقتباسك % % 8(@)(@@) % إذا نحن انتضينا منصلينا % % عرفت حديد قرنك من نحاسك % % 9(@)(@@) % ضمنت لك احتباس الحلم حتى % % أطيل على الهوان مدى احتباسك % % 10(@)(@@) % أتاني عنك أنك عبت شعري % % وما زلت المضلل في قياسك % % PageV01P3269 11(@)(@@) % فقلت عساه كان به نعاس % وعندي مايطير من نعاسك % % 12(@)(@@) % هجاء إن سكنت له تمادى % % وإن شامست ذلل من شماسك % % 13(@)(@@) % تفوح 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms747# له فواتح منك تحكي % % صديدك ميتا عند انبجاسك % % 14(@)(@@) % أقلني لا عدمت أخا عفوا % يقيلك عند عثرك وانتكاسك % % 15(@)(@@) % جهلت الأبنوس فقلت غصن % ولم أحسبه بعض قرون راسك % % 16(@)(@@) % وقد فهمتني فرجعت عما % % نكرت علي فاكفف حد باسك % % 17(@)(@@) % وأنت فتى أحطت بكل علم % لغوصك في است أمك واغتماسك % % 18(@)(@@) % وقد نوظرت في أشياء شتى % % فلم تعرف فساءك من عطاسك % % PageV01P3270 البحر : - 1(@)(@@) % لم أفسر غريبها لك لكن % لامرىء يجهل الغريب سواكا % % 2(@)(@@) % أنت أعلى من أن تعلم علما % ويدانى مدى عليم مداكا % % 3(@)(@@) % غير أني أملت حظوة شعري % % حين ترعى رياضه عيناكا % % 4(@)(@@) % فشرحت الغريب فيه رجاء % % أن يرواه ذات يوم فتاكا % % 5(@)(@@) % أو سواه من أهل ودك ممن % ليس في العلم جاريا مجراكا % % 6(@)(@@) % لالعجب قدرت ذاك ولكن % % ني أرجي بحسن رأيك ذاكا % % 7(@)(@@) % ما زال يتلو عرسها إملاكها % % دائرة في فسقها أفلاكها % % 7(@)(@@) % فابسط العذر لي وأنت حميد رجزدحداحة محراكهاقد هرمت ولم يخل إدراكهاواقعتها شائلة أوراكهافصادفت فيشلي أحناكها قبحا لها منطفس مناكخايسوط حشا منتنا محراكها ما زال يتلو عرسها إملاكها دائرة في فسقها أفلاكها ما زال يتلو عرسها إملاك % % مع ما أنت باسط من نداكا % % 7(@)(@@) % دحداحة محراكها % % قد هرمت ولم يخل إدراكها % % 7(@)(@@) % قبحا لها منطفس مناكخا % % يسوط حشا منتنا محراكها % % PageV01P3271 7(@)(@@) % كذب الغواني في سواد عذراه % % فكذبنه في ودهن كذاكا % % 7(@)(@@) % ما زال يتلو عرسها إملاكها % % دائرة في فسقها أفلاكها % % 7(@)(@@) % كأنما إيمانها إشراكها % % همتها الاضجاع أو إبراكها % % 7(@)(@@) % ونيكة عاتية تناكها % % لا برحت مستعرا حكاكها % % 7(@)(@@) % يسبك فيها نطفة سباكها % % لا عوفيت من شروكة تشاكها % % 7(@)(@@) % ولا نأى عن نفسها هلاكها % % 7(@)(@@) % كامل قل للمسود حين شيبهكذا % % غش الغواني في الهوى إياكا % % 7(@)(@@) % هيهات غرك أن يقالغرائر % أي الدهاة كدهيهنة دهاكا % % 7(@)(@@) % تحسبنك خدعتهن بخدعة % بل أنت ويحك خادعتك مناكا % % 7(@)(@@) % واقعتها شائلة أوراكها % % فصادفت فيشلي أحناكها % % PageV01P3272 البحر : - 1(@)(@@) % لك الخير إني أستزيد ولا أشكو % % ولا أكفر النعماء ما جرت الفلك % 2(@)(@@) % بلى ربما حاولت توثيق عروة % وليس لحظ منك أحرزته ترك % 3(@)(@@) % فلا تلحيني في العتاب فإنما % % عركت أديما لا يقصفه العرك % 4(@)(@@) % أأحمد نفسي أن تطيب لك الثنا % % وأنت الذي تذكو وأنت 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms748# الذي تزكو % % 5(@)(@@) % حرمت إذا حظي من الخير كله % % ولا كان لي في المجد اس ولا سمك % 6(@)(@@) % ومالي أستعدي وعدلك شامل % ومالي أستجفي وملكك لي ملك % 7(@)(@@) % وكنت متى استحللت إخفار حرمة % سفكت دماء لا يحل لها سفك % 8(@)(@@) % ولو كان حظي منك حظا مقاربا % صبرت لهضمي فيه لكنه الملك % 9(@)(@@) % ولو كان رزئي حسن رأيك نكبة % ربطت لها جأشي ولكنه الهلك % 10(@)(@@) % وماكان من تحنو عليه محاميا % ليلقى عليه من زمان له برك % PageV01P3273 11(@)(@@) % وما انبت حبل الوصل منك أعيده % بفضلك لكن ليس في متنه حبك % 12(@)(@@) % ومامرضت تلك العناية مرضة % تميت ولكن قد تطرقها نهك % 13(@)(@@) % وماضل رأي فيك مذ عرف الهدى % % ولاشاب أيماني بسؤددك الشك % 14(@)(@@) % أتاني بظهر الغيب أنك عاتب % وتلك التي رحب الفضاء لها ضنك % 15(@)(@@) % وأنت الذي يمضي الأمور بحكمه % % فلا منعه لوم ولا بدله محك % 16(@)(@@) % وإن جفاء منك محضا وقسوة % لتركك خلا لا يساعده الترك % 17(@)(@@) % أتحسبني أدللت إدلال جاهل % عليك بمدح لا يخالطه إفك % % 18(@)(@@) % وإني لم أحمل بمدحك محملا % من الإثم ينهى عنه نسك ولا فتك % 19(@)(@@) % ولا حمد لي في أن نشرك طيب % ولا حمد للمجداح أن نفح المسك % 20(@)(@@) % بلى ربما أنصفته فحمدته % أليس له في نشر أرواحه شرك % % PageV01P3274 21(@)(@@) % تذكر هداك الله إني سابك % وأنك تبر لا يغيره السبك % 22(@)(@@) % ومالي في در تحليت عقده % من الصنع إلا جودة النظم والسلك % PageV01P3275 البحر : - 1(@)(@@) % ياأبا حفص المبرز في الشع % ر لقد جدت للأكف برأسك % 2(@)(@@) % أنت لا شك أكرم الجن والإن % % س وإلا فعض فوك بجعسك % 3(@)(@@) % حلف أن أبالي إلى الحنث فيه % % بل يباليه من يعض بضرسك % % 4(@)(@@) % رب صفع مشعشع لي في رأ % % سك شهاك وقعه صفع نفسك % % 5(@)(@@) % فتمطيت قيس باع تمام % وتناولت من قفاك بخمسك % PageV01P3276 البحر : - 1(@)(@@) % أخالد قد عاديت في كراكا % % وأتعبت في حوك القريض قواكا % % 2(@)(@@) % فلا تهجني إني أخوك لآدم % وحسبي هجاء أن أكون أخاكا % % 3(@)(@@) % أخالد لاقدست من بعل زوجة % يصنعها في بيته لتناكا % % 4(@)(@@) % تقربها للنائكين مطية % جهارا ورب العالمين يراكا % % 5(@)(@@) % بلا رزء دينار ولا رزء درهم % % سوى أنهم يشفون منك حكاكا % % 6(@)(@@) % أما لك ياشر 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms749# الخلائق حمية % ولا غيرة أن يستباح حماكا % % 7(@)(@@) % بلى ربما استخليتهم فضل خلوة % فغرت عليهم واستشطت لذاكا % % 8(@)(@@) % تغار على عسب الرجال وإنما % % يغار على عقر النساء سواكا % % 9(@)(@@) % عشوت إلى ناري بحلم فراشة % فصادفتها نزاعة لشواكا % % PageV01P3277 البحر : - 1(@)(@@) % أخالد لو ألمت مضيض شيء % ممض مرمض لألمت جهلك % 2(@)(@@) % أشيخ من ذوي يمن صميم % % وتشتم فارسا ناقضت أصلك % % 3(@)(@@) % بهذا الفعل سرك أن تسمى % % جوادا مفصلا فأبحت أهلك % % 4(@)(@@) % لقد أخزيت من تنمى إليه % % ثكلتك عاجلا وثكلت عقلك % PageV01P3278 البحر : - 1(@)(@@) % ياخالد بن الخالدا % % ت مخازيا لا در محضك % % 2(@)(@@) % ودع فإنك قد دنا % % منك الرحيل وشد غرضك % % 3(@)(@@) % لأسيرنك في البلا % % د بما أقمت وطال خفضك % % 4(@)(@@) % ولأكحلنك بالسها % % د بما رقدت وطاب غمضك % % 5(@)(@@) % أهجوتني وحسبتني % % ممن يضيع لديه قرضك % % 6(@)(@@) % أخطأت في التقدير يا ب % % ن المومسات وعال فرضك % % 7(@)(@@) % أي القبائل ينتحى % % بالشتم حين يسب عرضك % % 8(@)(@@) % لا أيهن وكيف ذا % % ك ومن جميع الناس بعضك % % 9(@)(@@) % لا تسم عينك في العيو % % ن فلو عقلت لطال غضك % % 10(@)(@@) % أتناك ذاك وذاك طو % % لك في الرجال وذاك عرضك % % PageV01P3279 11(@)(@@) % سبحان شيطان يسخ % خر نائكيك وذاك بفضك % % 11(@)(@@) % لو كنت تنفض عارضيسبحان شيطان يسخخر نائكيك وذاك بفضك بذيء % % ك من التراب لطال نفضك % 12(@)(@@) % لو كنت ما ختم الرحي % % ق به لعنف من يفضك % % 13(@)(@@) % بظلامة الشوكي نا % % لك من عقابي ما يهضك % 14(@)(@@) % فاخرج له من حقه % % وأنب عسى ينجيك ركضك % % 15(@)(@@) % البدر للشوكي غي % ر مدافع والأرض أرضك % % 16(@)(@@) % دافعته عن بنته % % والغصب ما يحويه قبضك % % 17(@)(@@) % كي تستهب بها الفحو % % ل إذا كبرت وذاب نحضك % % 18(@)(@@) % داء تمكن في عجا % % نك قبل أن يشتد نهضك % % 19(@)(@@) % لا تعتذر مما أتي % ت من القبيح فمنك ربضك % % PageV01P3280 20(@)(@@) % العار منك وأنت من % % ه فليس من عار يمضك % % 21(@)(@@) % صبرا ستعلم أيما % % زبد يصرح عنه محضك % % 22(@)(@@) % في أيما متورد % دلاك يامغرور دحضك % % PageV01P3281 البحر : - 1(@)(@@) % أم حفص صلعة الش % يخ أبي حفص فديتك % % 2(@)(@@) % أنا والله عميد % بك صب مذ رأيتك % % 3(@)(@@) % نعمي كفي فإني % % بعت عرضي واشتريتك % % PageV01P3282 البحر : - 1(@)(@@) % يامن يسائل عن عشيرة خالد % الناس كلهم عشيرة ذاكا % % 2(@)(@@) % فمتى هجوت أبا الوليد 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms750# هجوتهم % % وهجوت في عرض الهجاء أباكا % % PageV01P3283 البحر : - 1(@)(@@) % أمكوك الخسار سأنتحيكا % % بإحدى الفاقرات ولا أقيكا % % 2(@)(@@) % أتأمر بالتقزز من كلامي % % وذكرك يصدىء الذهب السبيكا % % 3(@)(@@) % زعمت بأنني نحس وإني % % مجيبك معلنا لا أتقيكا % % 4(@)(@@) % توهم زحف موسى نحو حسن % على منقوصتيه لكي ينيكا % % 5(@)(@@) % وقد دانت لطاعته فكانت % % دجاجته وكان هناك ديكا % % 6(@)(@@) % فأنشق أنفها من نتن فيه % % كما أنشقتنا من نتن فيكا % % 7(@)(@@) % وماطل فوقها نزوا مريضا % كنزو مسخر لا يشتهيكا % % 8(@)(@@) % فإنك واجد ثم احتمالا % وصبرا مثل صبر مسخريكا % % 9(@)(@@) % لقد صبرت على قذر وقبح % % ولم تسعد ولم ترض المليكا % % 10(@)(@@) % فما هذا التقزز من كلامي % % وأمك لم تقزز من أبيكا % % PageV01P3284 11(@)(@@) % ولا من حملها إياك منه % % وقد حمل الخنا بطن يعيكا % % 12(@)(@@) % حلفت على التي بليت بموسى % % لقد جعلت له فيكم شريكا % % 13(@)(@@) % أقرد مقعد وتعف أنثى % % له كلا وإفك معلليكا % % 14(@)(@@) % أحاذر أن تكون سليل شتى % % وأحذر مثل ذاك على بنيكا % % 15(@)(@@) % عجبت ولا تعجب من ضلال % بدا للناس منك ومن ذويكا % % 16(@)(@@) % وكثرة ناسليك لقد أرانا % % سقوطك قلة المتنازعيكا % % 17(@)(@@) % رأيتك من بني حواء طرا % % وما في دهمهم من يدعيكا % % 18(@)(@@) % وماأنفيك عن موسى لأني % % أرى موسى يكثر غائظيكا % % 19(@)(@@) % ولكن جم فيك مشاركوه % وإن أصبحت بينهم تريكا % % 20(@)(@@) % رموا بك عن حر عمق وآلوا % % عليك ألية المتناكريكا % % PageV01P3285 21(@)(@@) % فلا تعرض لدعوى غير موسى % % فليس الأكرمون بقابليكا % % 22(@)(@@) % عليك عليك موسى فانتحله % فإن الناس غير مدافعيكا % % 23(@)(@@) % هو الزمن الذي أضحى وأمسى % % أقل الله فيه منافسيكا % % 24(@)(@@) % أبوك المقعد المعتوه أدنى % % إليك اللؤم والعقل الركيكا % % 25(@)(@@) % رأيت أخاك يطلب منك قوتا % وقد كثرت فيه مؤنبيكا % % 26(@)(@@) % فلم تسمح له بكفاف وجه % ولا شفعت فيه أقربيكا % % 27(@)(@@) % وعرضت الخبيثة لي سفاها % فعفت خبيثها حولا دكيكا % % 28(@)(@@) % فلما استكره الكلم المقفى % % تجشمها تجشم نائكيكا % % 29(@)(@@) % فقبحا يوم تبعث يا بن موسى % % لوجهك مردفا قبحا وشيكا % % 30(@)(@@) % أتسمح باست أمك للقوافي % % وتبخل بالكفاف على أخيكا % % PageV01P3286 31(@)(@@) % غدوت محالفا مالا بدينا % جعلت فداءه حسبا نهيكا % % 32(@)(@@) % أتاك شقاؤك يابن موسى % % لتكسب بي شماتة حاسديكا % % 33(@)(@@) % ولم أعلمك تطلبني بذحل % % ولكني إخالك مستنيكا % % 34(@)(@@) % ولو أني نزوت بألف أير % ومت لما وجدت لدي تيكا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms751# % % 35(@)(@@) % ومابي في احتمائك من سقام % ولكن المصحح يحتميكا % % 36(@)(@@) % وهل من قائل لك لا يراه % % سراة الناس مغبونا هتيكا % % 37(@)(@@) % أتنتحل التقزز يابن حسن وما تنفك متضعا ومنيا لعبد تشتريه فيشتريكا وكان الح عندك عبد سوء وعبد السوء ربا يستنيكا تشامخ إن لقيت ذوي المعالي وتسفل للعبيد فتعتليكا أعر شترا بعينك منك فكرا وطالب بالجناية واتريكا أيور ط % % وحجام القبيلة يمتطيكا % % 37(@)(@@) % وما تنفك متضعا ومنيا % لعبد تشتريه فيشتريكا % % 37(@)(@@) % وكان الح عندك عبد سوء % وعبد السوء ربا يستنيكا % % 37(@)(@@) % تشامخ إن لقيت ذوي المعالي % وتسفل للعبيد فتعتليكا % % PageV01P3287 37(@)(@@) % أعر شترا بعينك منك فكرا % وطالب بالجناية واتريكا % % 37(@)(@@) % أيور طاعنتك وأنت ماء % % وطالت عنك غفلة مدعيكا % % 38(@)(@@) % أيا شترا على بخر أليم % إلى قذر توق مهاتريكا % % 39(@)(@@) % أكلت السم يوم أكلت لحمي % % فلا يغررك قول مهنئيكا % % 40(@)(@@) % ستأكل من فريك الشتم صدرا % كما أكلت مشايخك الفريكا % % 41(@)(@@) % وأعقبك المدوس على فراغ % % وأعقب مثل ذاك مؤازريكا % % 42(@)(@@) % فصبرا للهجاء ستجتويه % % على أن الهجاء سيجتويكا % % 43(@)(@@) % بل الإعراض عنك علي فرض % وإن قدمت بعض الهجر فيكا % % 44(@)(@@) % ظلمتك إذ هجوتك يابن موسى % % وحقك أن أكثر مادحيكا % % 45(@)(@@) % لأنك نلت مني فاجتباني % % بذاك جميع من لا يجتبيكا % % PageV01P3288 46(@)(@@) % ومن لا يجتبيك الناس طرا % وضعفا ذاك من لا يرتضيكا % % 47(@)(@@) % ولكن لابحمدك ذاك لكن % % بحمد مكثر المتنقصيكا % % 48(@)(@@) % قلاك براءة وهواك عر % ودين الناس حمد مذمميكا % % 49(@)(@@) % فصلني بابتراكك في انتقاصي % % فشكري فوق شكر الشاكريكا % % 50(@)(@@) % أقرن صديقنا الحسن بن موسى % % علوت فليس خطب يرتقيكا % % 50(@)(@@) % وكم قد قلت حين يريب ريب % مقالة آمل من آمليكا % % 50(@)(@@) % سوى أني أمصك رأس أيري % % وودك أنني من ناكحيكا % % 50(@)(@@) % تألفني بذاك وتبتغيني % % وإن كنت امرأ لا أبتغيكا % % 50(@)(@@) % فتمنحني عيالك منح سمح % إذا نيكت حليلته ونيكا % % 50(@)(@@) % وأنت أخي أعدك للياليوتعرم غلمتني ويقوم أيريإذا عز السفاح فأعتريكا بذيء فتمنحني عيالك منح سمح إذا نيكت حليلته ونيكا بذيءتألفني بذاك وتبتغينيوإن كنت امرأ لا أبتغيكا سوى أني أمصك رأس أيريوودك أنني من ناكحيكا بذيء وكم قد قلت حين يري % % إذا عرت الخطوب وأرتجيكا % % PageV01P3289 50(@)(@@) % رأيتك حصن من يرتاد حصنا % فطوبى نائليك ونازليكا % % 50(@)(@@) % وتعرم غلمتني 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms752# ويقوم أيري % % إذا عز السفاح فأعتريكا % % PageV01P3290 البحر : - 1(@)(@@) % رأيت منكسر السكان ظاهره % هول وتأويله فأل لمنجاكا % % 2(@)(@@) % كسر لناكس دار كنت تحذره % وصحة لك تحيينا بمحياكا % % 3(@)(@@) % لأن لفظة سكان إذا قلبت % حروفهاناكس لا شك في ذاكاص فازجره ناكس دار هد قوته % % 4(@)(@@) % لك المليك الذي مازال مولاكا % % ولايرعك رجوع بعد معتزم % % 5(@)(@@) % ففي رجوعك تبشير برجعاكا % % رجعت حين نهاك الله مزدجرا % % 6(@)(@@) % وكيف تمضي ورب الناس ينهاكا % % نهاك بالريح حتى حل منحسة % % 7(@)(@@) % من المناحس ماكانت لتلقاكا % % فإن أقمت ففي خفض وفي دعة % 8(@)(@@) % وإن ظعنت فرب الناس يرعاكا % % لازلت في كل أمر أنت فاعله % % 9(@)(@@) % مبارك البدء مغبوطا بعقباكا % % ن % PageV01P3291 البحر : - 1(@)(@@) % قد لعمري اقتصصت من كل ضرس % كان يجني عليك في رغفانك % 2(@)(@@) % لم تجد حيلة لنا إذ وترنا % % ك فحاربتنا بشر دنانك % 3(@)(@@) % أضرستنا مدامة منه تحكي % % ضجرة تعتريك من ضيفانك % % 4(@)(@@) % قد رددناه فادخره لسكبا % % جك والنائبات من أزمانك % % 5(@)(@@) % واتخذه على خوانك أدما % فهو أولى بالخل من إخوانك % % 6(@)(@@) % هذه صحة المحاماة عن خب % % زك بحتا فكيف عن لحمانك % % 7(@)(@@) % لوسطونا على الهريسة وافى % % سيفك الهام سابقا لسنانك % % 8(@)(@@) % قدعضضناك عضة بمزاح % هو من طرزك المليح وشانك % 9(@)(@@) % وذهبنا إلى امتحانك للبق % يا وما كان عمدنا لامتهانك % 10(@)(@@) % فدع العتب والعتاب فلسنا % % إن عزمت القتال من أقرانك % % PageV01P3292 11(@)(@@) % لاتلمنا فأنت تفاحة الأر % % واح لا راعها خلو مكانك % % 12(@)(@@) % طيبها عند شمها يتقاضى % % عضها المخلصين من خلانك % % 13(@)(@@) % فانتقم إن آثرت من طيب أع % راق سقتك القبول في أغضانك % % PageV01P3293 البحر : - 1(@)(@@) % ذق أباجعفر مغبة جرمك % واجن ماأثمرت سفاهة حلمك % 2(@)(@@) % ماتعرضت لي وجدك حتى % % قرن الله كل نحس بنجمك % % 3(@)(@@) % أبعقل المعلمين يعاب الشع % % ر أيري في القعر من بظر أمك % % 4(@)(@@) % لست عندي أن عبت شعري ملوما % لك عذر لدي في ضيق علمك % % 5(@)(@@) % لقريضي يابن الزواني معان % قصرت دونها مذاهب فهمك % % 6(@)(@@) % هنت عندي فلا مديحك يهدي % % لي سرورا ولا أساء بذمك % % 7(@)(@@) % أنت نغل من ألف نطفة فحل % عددا ركبت مفاصل جسمك % % 8(@)(@@) % قد أردت الإعراض عنك احتقارا % لك لاأنني جنحت لسلمك % % 9(@)(@@) % فتذكرت موبقات ذنوبي % % فرجوت الخروج منها بشتمك % % 10(@)(@@) % فاحمد الله قد 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms753# رزقت هجاء % بعد طول الخمول نوه باسمك % % PageV01P3294 11(@)(@@) % فخذنه فإن قنعت وإلا % % فعلينا من بعد توفير قسمك % % PageV01P3295 البحر : - 1(@)(@@) % يامن جلا دهرنا دجاه به % وعن تباشير وجهه ضحكا % % 2(@)(@@) % ومن به رد ستر عورته % % من بعد ماكان سترها هتكا % % 3(@)(@@) % ومن إذا حجة مجلية % لاحت لعينيه لم يكن محكا % % 4(@)(@@) % ومن أبى الله أن نرى أبدا % بعرضه في مذمة معكا % % 5(@)(@@) % أستودع الله حسن رأيك في % % عبد تلافيته وقد هلكا % % 6(@)(@@) % يغيب إن غاب والنصيحة والود % د رفيقاه حيثما سلكا % % 7(@)(@@) % طافت به علة فعالجها % % فاعتركت والعلاج معتركا % % 8(@)(@@) % وقد أناخت به مماطلة % فقد صغا من مطالها وبكى % % 9(@)(@@) % وخوفه العتب منك يفرشه % جرر الغضا ليله أو الحسكا % % 10(@)(@@) % وحقه أن تكون تؤمنه % % من كل شيء يخافه الدركا % % PageV01P3296 11(@)(@@) % وإن إخلاله ليكرثه % لكن عودا بعينه بركا % % 12(@)(@@) % وهو يرجي بيمن وجهك ذي اليم % % ن قديما أن يقطع الشركا % % 13(@)(@@) % يمن إذا مس ذا الوقود خبا % % عفوا وإن مس ذا الخمود ذكا % % 14(@)(@@) % كم ساق من صحة وعافية % إلى شديد ضناه قد نهكا % % 15(@)(@@) % حتى استقلت به قواه كما % % كان وأضحى سكونه حركا % % 16(@)(@@) % وكل جار غدوت تعصمه % % فليس ذاك الحريم منهكا % % 17(@)(@@) % وعبدك العبد لا يخلفه % % عن حظه غير ما نثاه لكا % % 18(@)(@@) % فأذن له في علاج علته % % واقبل من العذر ما نثا وحكى % % 19(@)(@@) % أولافهبني اعتذرت معذرة % أفكت فيها كبعض من أفكا % % 20(@)(@@) % أليس للنقص كنت عبدك لا % % شك وللفضل كنت لي ملكا % % PageV01P3297 21(@)(@@) % لابل لعمري كذا الحقيقة يامن % % طاب فرعا ومحتدا وزكا % % 22(@)(@@) % فاغفل فما زلت في الإقالة والصف % % ح غريرا في الرأي محتنكا % % 23(@)(@@) % وابذل لي العفو والتجاوز والإغ % % ضاء حتى يقال مااتركا % % 24(@)(@@) % أحسن ودعني أسيء يخلص لك ال % % حمد وإلا أتاك مشتركا % % 25(@)(@@) % وقل مدل بحرمة قدمت % على رءوف بكل من ملكا % % 26(@)(@@) % صادف فضلا من سيد فصفا % % إلى الهوينى ومشتكى فشكا % % 27(@)(@@) % لازلت تعلو يداك مصطنعا % للخير حتى تصافح الفلكا % % 28(@)(@@) % ولاتزل لي بالشكر قافية % فيك تسير الوجيف والرتكا % % 29(@)(@@) % تلذ من كل سامع أذنا % حسنا ومن كل منشد حنكا % % 30(@)(@@) % ويروى وليس في السيئات أكسبها % % بعهد أمر إذا امرؤ فتكا % % PageV01P3298 31(@)(@@) % فأمن وآمن فتى قد 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms754# انسكبت % % أخلاقه مذ ذاك وانسبكا % % 32(@)(@@) % أمنك الله ماتخاف ولا % % أجرى بغير اعتلائك الفلكا % % 33(@)(@@) % ومن رعى حيث لاأمان له % % فلازلت بمرعى مجانب شركا % % PageV01P3299 البحر : - 1(@)(@@) % أريد جداك وأستمنحك % وأغشى ذراك ولا أمدحك % 2(@)(@@) % ومثلك يمنحني فضله % ولكن مثلي لا يمنحك % % 3(@)(@@) % ومالي أراك عديل الثنا % % ء مني وتلك العلا ترجحك % 4(@)(@@) % ومالي أطربك مستصلحا % وأخلاقك الدهر تستصلحك % % PageV01P3300 البحر : - 1(@)(@@) % أسومك مايسوم العبد مثلي % % مليكا من بني الأملاك مثلك % 2(@)(@@) % أسومك أن تدر علي رزقي % % وتنبذ خدمتي لتبين فضلك % 3(@)(@@) % وقد أغربت جدا في سؤالي % % لتغرب في العلا وأمنت بخلك % % 4(@)(@@) % ولم أجهل هنالك جور حكمي % % ولكني عرفت هناك نبلك % % 5(@)(@@) % فإن تفعل فأنت لذاك أهل % وإن تمنع فلست ألوم عدلك % % 6(@)(@@) % ولست بعادم ما دمت حيا % مديحك سالكا في كل مسلك % % 7(@)(@@) % حلفت بمن يردك لي مردا % كريما إنه بالأمر أملك % % 8(@)(@@) % لئن أخفى حذاري عنك شخصي % % لما أرسلت من كفي حبلك % % 9(@)(@@) % ولم أهرب على ثقة وعلم % بأني إن رميت أفوت نبلك % % 10(@)(@@) % ولكني هربت على يقين % بأنك مغمد في الحلم نصلك % % PageV01P3301 11(@)(@@) % ومابي رغبة من عبد عبد % لديك وإن جعلت أذاي شغلك % % 12(@)(@@) % ولكني أصون عليك قدري % % ورب مصونة لي فيك بل لك % % 13(@)(@@) % ومالي أستخف بقدر نفسي % % وقد أوطأتها يومين رحلك % % 14(@)(@@) % وقد نبهتها ورفعت منها % % وشكل قدرها التشريف شكلك % % 15(@)(@@) % وحسبي رفعة وعلو قدر % بأني مرة قبلت رجلك % 16(@)(@@) % فلا تسخط علي ولاتذلني % % وشبه بالمحاسن منك فعلك % % 17(@)(@@) % وصن حرا بذلت له العطايا % % فقد شان ابتذالك منه بذلك % % PageV01P3302 البحر : - 1(@)(@@) % سبحان مجري الفلك والفلك % ومصور الإنسان والملك % 2(@)(@@) % إن السعيد لمدرك دركا % وأخو الشقاوة فهو في الدرك % 3(@)(@@) % والشر بين الناس مشترك % والخير فيهم غير مشترك % % 4(@)(@@) % يتقارعون الموت عن مسك % ومع القراع إفاتة المسك % % 5(@)(@@) % وكفاهم من قتل أنفسهم % % باثنين من وضح ومن حلك % 6(@)(@@) % في الليل كاف والنهار إذا % % هرجاهم بمناحس الفلك % 7(@)(@@) % وإلى الخمود مآل ذي لهب % وإلى السكون محار ذي حرك % % 8(@)(@@) % طار الحمام وغاص مقتدرا % فأمات حي الطير والسمك % % 9(@)(@@) % لاتكذبن فما لذي نفر % فيها حريم غير منتهك % % 10(@)(@@) % إن الزمان إذا غدا فعدا % % قتل الملوك بكل معترك % % PageV01P3303 11(@)(@@) % ضعف العوامل في أسنتها % % ضعف 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms755# المعازل عنه في الفلك % % 12(@)(@@) % نسي المتالف قلب منهمك % فما يزاول كل منهمك % % 13(@)(@@) % وغدا الرجال على مكاسبهم % يتبادرون مطارح الشبك % 14(@)(@@) % والعين تبصر أين حبتها % % لكنها تعمى عن الشرك % % 15(@)(@@) % لذكرت هذا الموت فارتبكت % نفسي هناك أشد مرتبك % % 16(@)(@@) % ماضر ذاكره وناظره % ألا ينام على سوى الحسك % 17(@)(@@) % ياجبلة أملاكها ترك % حتام ذبكم على الترك % % PageV01P3304 البحر : - 1(@)(@@) % غدا الدهر مفترا أغر المضاحك % عن ابن عبيد الله تاج الممالك % 2(@)(@@) % عن الكوكب الدري في كل حندس % عن اللمعة البيضاء في كل حالك % 3(@)(@@) % عن القاسم المقسوم في الناس رفده % إذا لم تطب عن ملكها نفس مالك % % 4(@)(@@) % عن ابن سليمان بن وهب فتى العلا % % على رغم أوغاد كهول الحسائك % % 5(@)(@@) % أغر يكنى بالحسين مسلم % % له الحسن والإحسان كل مماحك % % 6(@)(@@) % وزير ولي العهد وابن وزيره % % أخو المجد ركاب الأمور التوامك % % 7(@)(@@) % تكشف منه محنة الملك شيمة % مهذبة والتبر عند السبائك % % 8(@)(@@) % وإن سترت وجه الحقائق شبهة % رمى سترها بالصائبات الهواتك % % 9(@)(@@) % ويفزع في الجلى إلى عزماته % فيستل منها كالسيوف البواتك % % 10(@)(@@) % يعارك بالتدبير كل شديدة % فيصرعها لاهد ركن المعارك % % PageV01P3305 11(@)(@@) % فتى عطرت ذكراه وانهل جوده % تهلل باك من حيا المزن ضاحك % % 12(@)(@@) % فعافيه في نضح من الغيث صائب % ومطريه في نضح من المسك صائك % % 13(@)(@@) % ذكا وزكا فالعرف من وبل ديمة % سماكية والعرف من طيب ذانك % % 14(@)(@@) % ألاح بروق البشر تدعو عفاته % فجاءوا فأعفى بالرغاب الوشائك % % 15(@)(@@) % فنفلت الأيدي غناها بمدحه % ونفلت الأفواه طيب المساوك % % 16(@)(@@) % أقول لسئال به متجاهل % محلت وقد آنت إنابة ماحك % % 17(@)(@@) % توهم مصابيح السماء سبائكا % % وصغ مثله من صفو تلك السبائك % % 18(@)(@@) % فتى أسهلت خيراته لعفاته % فأحزن في تلك المعاني السوامك % % 19(@)(@@) % ومن كثرت في ماله شركاؤه % غدا في معاليه قليل المشارك % % 20(@)(@@) % فتى لا يبالي حين يحفظ مجده % % متى هلكت أمواله في الهوالك % PageV01P3306 21(@)(@@) % له راحة روحاء يسفك ماءها % % وليس لماء الوجه منه بسافك % % 22(@)(@@) % مقبل ظهر الكف وهاب بطنها % % مواهب ليست بالخساس الركائك % % 23(@)(@@) % يسوق إلى تقبيلها القوم أنها % % غياث لهم بل عصمة في المهالك % % 24(@)(@@) % نرحل آمالا إلى باب قاسم % فيرجعن أموالا عراض المبارك % % 25(@)(@@) % حباني بما يعيا به كل رافد % وحبرت مايعيا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms756# به كل حائك % % 26(@)(@@) % فأعدمته مدح الغثاث مدائحا % وأعدمني رفد الأكف المسائك % % 27(@)(@@) % ومالربيع ممطر من مجاود % % ومالبقيع مزهر من محاوك % % 28(@)(@@) % وهبت له نفسي وودي ونصرتي % % ولو صك وجهي حد أبيض باتك % % 29(@)(@@) % أقول لأقوام تعاطوا علاءه % % فأعيتهم الخضراء ذات الحبائك % % 30(@)(@@) % دعوا آل وهب للمعالي فإنهم % بقايا الليالي الآخذات التوارك % % PageV01P3307 31(@)(@@) % أناس يسوسون البلاد وأهلها % % بشدة أركان ولين عرائك % % 32(@)(@@) % سراة إذا ماالناس أضحت سراتهم % % لنا ضحكا أضحوا لنا كالمضاحك % % 33(@)(@@) % يود الورى لويشترون شهورهم % % بأحوال أعوام سواهم دكائك % % 34(@)(@@) % وشاهد زور للكفور ابن بلبل % فقلت له أطغيت أطغى البوائك % % 35(@)(@@) % وقد كنت من مداحه غير أنني % % تناوكت مضطرا مع المتناوك % % 36(@)(@@) % فلم يجزني إلامواعيد أعصفت % بهن أعاصير الرياح السواهك % % 37(@)(@@) % بلى قد جزاني لو شكرت جزاءه % جزاء منيك في إسته غير نائك % % 38(@)(@@) % وليس جزاء أن عفا إذ مدحته % % وقد كنت أهلا للعصي الدمالك % % 39(@)(@@) % ولست بهجاء ولكن شهادة % لدي أودي حقها غير آفك % % 40(@)(@@) % وما أنا للحم الخبيث بآكل % وإن له مني للوكة لائك % PageV01P3308 41(@)(@@) % إذا استمسكت كفي بعروة قاسم % فلست على صرف الزمان بهالك % % 42(@)(@@) % أرانا عيانا كل عفو ونائل % % سمعنا بمذكوريهما في البرامك % 43(@)(@@) % تداركني من عثرة الدهر قاسم % بما شئت من معروفه المتدارك % % 44(@)(@@) % فأصبحت في أيك من العيش مثمر % وأمسيت في عيى من العز شائك % % 45(@)(@@) % فتى في نثاه شاغل عن سؤاله % سبوق العطايا للطلوب المواشك % % 46(@)(@@) % فليس لأبشار الوجوه بمخلق % % وليس لأستار الخفايا بهاتك % % 47(@)(@@) % فتى لاأسميه فتى لحداثة % ولكن لهاتيك السجايا الفواتك % % 48(@)(@@) % سجايا أبت إلاانتصافا لجارها % % من الدهر إما عض رحل بحارك % % 49(@)(@@) % يواحك عند العذل في بذل ماله % وعند ارتياد الحق غير مواحك % % 50(@)(@@) % وسائلة عن قاسم ومكانه % فقلت لها إن العلاء هنالك % % PageV01P3309 51(@)(@@) % كريم تفي أفعاله بانتسابه % وذو نسب في آل ساسان شابك % % 52(@)(@@) % أظل إذا شاهدت يوم نعيمه % كأني في الفردوس فوق الأرائك % % 53(@)(@@) % بمرأى من الدنيا جيمل ومسمع % لدى ملك بالحق لامتمالك % % 54(@)(@@) % مقابل وجه منه أبيض مشرق % كبدر الدجى بين النجوم الشوابك % % 55(@)(@@) % يحييه أترج تسامى حياله % % وشاهسفرم تحته كالدرانك % % 56(@)(@@) % وفاكهة فيها مشم ومطعم % ترد مودات النساء الفوارك % % 57(@)(@@) % ولو عدم الريحان حياه نشره % بمثل 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms757# سحيق المسك فوق المداوك % % 58(@)(@@) % بنفسي وأهلي ذاك وجها مباركا % تلقى بأوفى الشكر نعمى المبارك % % 59(@)(@@) % تحث الحسان المحسنات كؤوسه % بمدح له قد سار جم المسالك % % 60(@)(@@) % فيهتز للجدوى على كل مجتد % وكانت ملاهي مثله كالمناسك % % PageV01P3310 61(@)(@@) % له مجلس ماإن يزال مصدرا % بأحسن من بيض النعام الترائك % % 62(@)(@@) % يغنينه فيه المحسنات لمحسن % % لهاه من الأمداح غير الأوافك % 63(@)(@@) % ولم يتغن المحسنات لمحسن % بمثل مديح ذامل فيه راتك % 64(@)(@@) % شهدنا له يوما أغر محجلا % أقام لنا اللذات فوق السنابك % % 65(@)(@@) % لأم علي ربرب فيه آنس % من العين مثل العين حفت بعانك % % 66(@)(@@) % من الوضح اللعس الشفاه كأنما % % يفهن بأفواه الظباء الأوارك % % 67(@)(@@) % يرفعن أصواتا لدانا وتارة % ينمنمن وشيا غير وشي الحوائك % % 68(@)(@@) % كفلن لنا لما اصطففن حيالنا % % بترحيل أضياف الهمزم السوادك % % 69(@)(@@) % فمابرحت تهدي إلينا عجائب % عجائب تصبي كل صاب وناسك % % 70(@)(@@) % فتاة من الأتراك ترمي بأسهم % % يصبن الحشا في السلم لا في المعارك % % PageV01P3311 71(@)(@@) % كأن زمير القاصيات أعارها % % شجاه وسجع الباكيات الضواحك % % 72(@)(@@) % وبستان بستان يقر عيوننا % % بما فيه من نواره المتضاحك % % 73(@)(@@) % غناء ووجه مونقان كلاهما % % يهيلان جولي ذي الحجى المتماسك % % 74(@)(@@) % ظللنا لها نصبا تشك قلوبنا % % بذاك الشجا الفتان لا بالنيازك % % 75(@)(@@) % وماجلناربالمقصر شأوها % % ولا المتعدي قصد أهدى المسالك % % 76(@)(@@) % لطيفة قد الثدي تسند عودها % % إلى ناجم في ساحة الصدر فالك % % 77(@)(@@) % تطامن عن قد الطوال قوامها % % وأربى على قد القصار الحواتك % % 78(@)(@@) % ورقاصة بالطبل والصنج كاعب % لها غنج مخناث وتكريه فاتك % % 79(@)(@@) % أتيح لها في جسمها رفد رافد % وإن نالها في خصرها نهك ناهك % % 80(@)(@@) % إذا هي قامت في الشفوف أضاءها % % سناها فسفت عن سبيكة سابك % % PageV01P3312 81(@)(@@) % تخطى اسم عيار إلى اسم مؤاجر % مسم لها ما شئت من متفاتك % % 82(@)(@@) % فدت تلكم الأسماء بل حاملاتها % % زيانب أرض الله بعد العواتك % % 83(@)(@@) % وجوه كأيام السعود تشبها % % لنا طرر مثل الليالي الحوالك % % 84(@)(@@) % سبايا إليهن استباء عقولنا % % مماليك ملكن اقتدار الممالك % % 85(@)(@@) % نوازل بين الانبساط إلى الخنا % % وبين انقباض المخبتات النواسك % % 86(@)(@@) % موالك يسفكن الدماء ولاترى % % لهن اكتراثا بالدموع السوافك % % 87(@)(@@) % إذا هن أزمعن الفراق فكلنا % % أسي على تلك الشموس الدوالك % % 88(@)(@@) % أقاسم ما تترك فلست بآخذ % أبيت وما تأخذ 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms758# فلست بتارك % % 89(@)(@@) % فلا تتركني أيها الحر عرضة % لدهر غدا للحر غير متارك % % PageV01P3313 البحر : - 1(@)(@@) % أيها السيد الجليل أدام الله % % في طول مدة تأييدك % 2(@)(@@) % إن من أعجب العجائب قردا % يتحداك ناقضا توكيدك % 3(@)(@@) % مستخفا بمن خصصت من القوم % ويشجيه أن نكيد مكيدك % % 4(@)(@@) % قلت إذ جاءني توعد عمرو % بعدما سالم الزمان عبيدك % % 5(@)(@@) % ورعى الله من رعيت من النا % % س ولم يرع من رآه طريدك % % 6(@)(@@) % جاري الله من وعيدك ياعم % % رو فذاك الوعيد وليس وعيدك % % 7(@)(@@) % بل وعيد الذي زهتك به نف % % سك حتى أهديت لي تهديدك % 8(@)(@@) % لاتطاول بأن حباك وأن زا % % دك لاأحسن الإله مزيدك % % 9(@)(@@) % ليس حظي بدون حظك منه % % بل أبى الله أن أكون نديدك % % 10(@)(@@) % وهو لي جنة تفل شبا بأ % % سك بل عدة تفض عديدك % % PageV01P3314 11(@)(@@) % فازجر النفس عن توعد مثلي % % قبل أن يأخذ الحسام وريدك % % 12(@)(@@) % إنني إن خشيت بأسك ياعم % % رو المخازي لمخلص توحيدك % % PageV01P3315 البحر : - 1(@)(@@) % أسل الذي عطف الأعن % % نة والمواكب نحو بابك % 2(@)(@@) % وأراك نفسك مالكا % % ما لم يكن لك في حسابك % % 3(@)(@@) % وأذل موقفي العز % % يز علي في أقصى رحابك % % 4(@)(@@) % ألا يطيل تجرعي % % غصص المنية من حجابك % % PageV01P3316 البحر : - 1(@)(@@) % ردي التحية من وراء حجابك % % رد الإله قلوبنا بإيابك % 2(@)(@@) % قد كنت آنس بالمرور ببابك % % فالآن أوحش إذ غدوا بركابك % % 3(@)(@@) % ماالموت في سكراته بأشد من % وجدي عشية آذنوا بذهابك % % 4(@)(@@) % فتيقني أن قد قتلت فتى له % % قلب تشحط في أليم عذابك % 5(@)(@@) % ماللمطي تخاذلت أركانه % لما غدا متقاذفا بقبابك % % 6(@)(@@) % وتزايلت أوصاله عن رحله % إذ بت حبلي من عرا أسبابك % % PageV01P3317 البحر : - 1(@)(@@) % الخير مصنوع بصانعه % فمتى صنعت الخير أعقبكا % % 2(@)(@@) % والشر مفعول بفاعله % فمتى فعلت الشر أعطبكا % % 3(@)(@@) % تالله ماألهبت مصطليا % إلا لنحس فيك ألهبكا % % 4(@)(@@) % فاحرص على ألا تسيء عسى % % ألا يكون النحس كوكبكا % % 5(@)(@@) % واعلم بأن الله منتقم % فاجعل تقاة الله مهربكا % % 6(@)(@@) % لاتحسبن الله مطرحا % من بت تضحك منه حين بكى % % 7(@)(@@) % أويستقيد له وينصره % % ويصيب بالتكدير مشربكا % % 8(@)(@@) % فأنب إليه تصبك رحمته % % وارهب إذا ماالله أرهبكا % % 9(@)(@@) % ومتى أقالك فاخش سطوته % % فهو القدير إذا تطلبكا % % 10(@)(@@) % لاتطمعنك فيه رأفته % إن المطامع تنصب الشبكا % % PageV01P3318 البحر : - 1(@)(@@) % نبل 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms759# الردى يقصدن قصدك % فأحد قبل الموت حدك % 2(@)(@@) % قد عد قبلك من رأي % ت ولست تلبث أن يعدك % % 3(@)(@@) % فدع البطالة والغوا % % ية جانبا وعليك رشدك % 4(@)(@@) % فكأنني بك قد نعيص ت وقد بكى الباكون فقدك % % وتركت منزلكالمشي % % 5(@)(@@) % د معطلا وسكنت لحدك % % وخلوت في بيت البلى % % 6(@)(@@) % وخلا بك الملكان وحدك % % وسلاك أهلك كلهم % % 7(@)(@@) % ونسوا على الأيام عهدك % % يتمتعون بما جمع % 8(@)(@@) % ت ولا يرون عليه حمدك % % متمهدون وأنت تح % % 9(@)(@@) % ت الرمس يرعى الدود جلدك % % قد سلموك إلى الضري % % 10(@)(@@) % ح ووسدوا بالترب خدك % % كم قد دفنت أحبة % PageV01P3319 11(@)(@@) % حلوا محل النفس عندك % % انظر إلى أهليهم % 12(@)(@@) % فكذلك الباقون بعدك % % فانظر لنفسك مكملا % 13(@)(@@) % فيما يحب الله جهدك % % ن % PageV01P3320 البحر : - 1(@)(@@) % بينما أنت في احتيال فياشك % ونزاع الرجال بنت فراشك % 2(@)(@@) % إذ حداك الشقاء نحوي فأقبل % % ت وما ذاك من رباطة جأشك % 3(@)(@@) % أيها القحطبي ماضر ناري % % ماهوى في جحيمها من فراشك % % 4(@)(@@) % أنت يا شيخ نائم فتنبه % وانتصحني فلست من غشاشك % % 4(@)(@@) % ضحكت منك محكمات القوافيمغرما بالأيور كهلا وطفلا منذ داواك مصها من عطاشك بذيءوكذا لا تزال عمرك أو تعجز عن مسهن من إرعاشك كيف بالله برد صدقي على قلبك أم كيف طعمه في مشاشكلست ممن يمكن الماء في الرحم ولا للنساء جل اهت % % حين عارضت وابلي برشاشك % % 4(@)(@@) % مغرما بالأيور كهلا وطفلا % منذ داواك مصها من عطاشك % 4(@)(@@) % وكذا لا تزال عمرك أو تع % % جز عن مسهن من إرعاشك % % 4(@)(@@) % لست ممن يمكن الماء في الرح % م ولا للنساء جل اهتشاشك % % 4(@)(@@) % لك أنثى تزيف في كل عش % وتربى الفراخ في أعشاشك % % 4(@)(@@) % غير أني أراك جمشت أيري % % وحسبت انجماشه كانجماشك % PageV01P3321 4(@)(@@) % لا تغرنك المطامع منه % % إنه ليس من ضباب احتراشك % % 4(@)(@@) % سخل ما عدت فراشك لكن % % لم تكن قط من بنات فراشك % % 4(@)(@@) % كيف بالله برد صدقي على قل % % بك أم كيف طعمه في مشاشك % % 5(@)(@@) % مايدانيك بعدها خبث نشر % بعد عشر صداك عند انتباشك % % 6(@)(@@) % أأن استبعتك قحطبة الأن % % جاد كلبا قصدتني بهراشك % 7(@)(@@) % أفهلا انتظرت تصحيحك الدع % % وة في القوم طرت قبل ارتياشك % % PageV01P3322 البحر : - 1(@)(@@) % بيهقي مزدقي ذكر تشغر للناكة أنثاه 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms760# وتبرك وإذا آت أتاهاقال عوليني بمهرك وإذا آب أباها قالنيكيه ببظرك بذيء لا تكفي عنه أوينظر في أمري وأمرك جعل الرحمن عمريصلة في طول عمرك إنما آكل بإستيوفمي من فضل ثغرك % % كافر بالله مشرك سقط أبيات % % PageV01P3323 البحر : - 1(@)(@@) % ذكر تشغر للنا % % كة أنثاه وتبرك % % PageV01P3324 البحر : - 1(@)(@@) % وإذا آت أتاها % % قال عوليني بمهرك % PageV01P3325 البحر : - 1(@)(@@) % وإذا آب أباها % % قالنيكيه ببظرك % % PageV01P3326 البحر : - 1(@)(@@) % لا تكفي عنه أوين % % ظر في أمري وأمرك % PageV01P3327 البحر : - 1(@)(@@) % جعل الرحمن عمري % % صلة في طول عمرك % % PageV01P3328 البحر : - 1(@)(@@) % إنما آكل بإستي % % وفمي من فضل ثغرك % % 2(@)(@@) % ياأبا إسحاق قل في % ي كشعري لا كشعرك % % 3(@)(@@) % حسرتي للورق المك % % توب فيه مثل هذرك % % 4(@)(@@) % لالعرضي من هجاء % صاغه فاسد فكرك % % 5(@)(@@) % ياأبا إسحاق واقلب % ثم صحف حرك % % 6(@)(@@) % نال موسى بعصاه % % دون ما نلت بأيرك % 6(@)(@@) % فهم من خائف شر % رك أو راج لخيرك % 6(@)(@@) % أنت للتاس إله % لا يدينون لغيرك % % 6(@)(@@) % صل على الناس جميعا % وتخمطهم بسيرك % % 6(@)(@@) % إنها كنية من كامجزوء الرملصل على الناس جميعا وتخمطهم بسيرك أنت للتاس إله لا يدينون لغيرك فهم من خائف شررك أو راج لخيرك نال موسى بعصاهدون ما نلت بأيرك بذيء % % ن به عر كعرك % % PageV01P3329 البحر : - 1(@)(@@) % هاجرت عنك إلى الرجا % % ل فكان عرفهم كنكرك % 2(@)(@@) % فرجعت من كثب إلي % % ك مفرغا نفسي لشكرك % % 3(@)(@@) % ولما أروم بما أقول زيا % % دة في رفع ذكرك % 4(@)(@@) % لكنه حق أوفي % % ه عوانك بعد بكرك % 5(@)(@@) % كم نعمة لك ملء فك % ري لا تلاحظها بفكرك % % PageV01P3330 البحر : - 1(@)(@@) % قل للمكنى باسم خير الورى % % صلى عليه ربنا والملك % 2(@)(@@) % ياحسن المرأى وماتحته % بالحق لابالمنظر المؤتفك % % 3(@)(@@) % نفسي تقيك السوء من مقتد % بالمجد في كل سبيل سلك % % 4(@)(@@) % أصغ إلى قولي بأذن امرىء % يرى العطايا خير مال ملك % % 5(@)(@@) % لايقرع السن لها نادما % ولايرى المعروف شيئا هلك % % 6(@)(@@) % اخلع على نفسك لي خلعة % باقية مادام هذا الفلك % % 7(@)(@@) % يلبسها محتملا ثقلها % % عنك وما زينه فهو لك % % 8(@)(@@) % درع يمانا جسمها وادرع % زينتها تشركه خير الشرك % % 9(@)(@@) % أن أبا القاسم مستأهل % عارفة من عرفك المشترك % % 10(@)(@@) % قد كنت قدمت بها موعدا % وليس في المطل بها من درك % PageV01P3331 11(@)(@@) % لن 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms761# يندم المعطي على عرفه % بل يأسف المبقي على ماترك % % 12(@)(@@) % يفديك من هم بثوب له % % ثم فداه عرضه المنتهك % % 13(@)(@@) % عرضن عرضا ووقى ملبسا % أغرى به اللاحين حتى انتهك % % PageV01P3332 البحر : - 1(@)(@@) % إني إذا ماالخصم في الغي ابترك % ولج في غرب السفاه ومحك % 2(@)(@@) % أعلكته نكل الجموح ماعلك % % وشاعر أخطل يلغو بالضحك % % 3(@)(@@) % حاربني إذ لم تحنكه الحنك % % حتى إذ ماالأمر بالأمر ارتبك % % 4(@)(@@) % وازدحم الورد عليه واعترك % % واعتبط الشر عليه وابترك % % 5(@)(@@) % وأل إذ صكته صكا بعد صك % % مسومات تترك السمع أسك % % 6(@)(@@) % تتبع ذيل الريح أخرى ماسهك % % أحين قال الناس ذكا واحتنك % % 7(@)(@@) % ودر لي در الكلام وحشك % % وأوجف السير بشعري ورتك % % 8(@)(@@) % تاح ابن بوران لي الوغد الأرك % % بؤسا له في أيما فتك فتك % % 9(@)(@@) % لاغرو أن حين بي حتى هلك % % إن البغاث للصقور والشبك % 10(@)(@@) % حذار من غضب إذا مس بتك % % لم يتعمد مثلةفك وفك % % PageV01P3333 11(@)(@@) % أنا ابن كسرى شاد بيتي وسمك % % نحن البهاريم يقينا غير شك % % 12(@)(@@) % نحن أولو العز الذي لا ينتهك % % طال سنام المجد فينا وتمك % % 13(@)(@@) % والتف عيص المجد فينا واشتبك % % إيه عن الشائم أصحاب فدك % % 14(@)(@@) % أمكن صدق القول فاعد المؤتفك % % واهتك ومانهتك إلا منهتك % % 15(@)(@@) % بوران ملهى من غوى ومن فتك % % وابن لحشيه جذل المعرتك % % 16(@)(@@) % واثلث بحمدونة دعموص السكك % % شر ثلاث تحت بطنان الفلك % % 17(@)(@@) % يبتن في جوف الظلام ذي الحلك % % يشرك فيهن البعول من شرك % % 18(@)(@@) % ليس لها معوج دون الدرك % % تواجه الفحل بمسلاس الشرك % % 18(@)(@@) % لفتح أستاه كأمثال البرك % % لولا الداراة لما فيها انسفك % % 18(@)(@@) % مهرنه من بلغ لاقوت المسك % % يخلطن بالمشية من غير صكك % % PageV01P3334 18(@)(@@) % يسحبن أو يوكين إيكاء العكك % % إذا رأين الحادر العبل المصك % % 18(@)(@@) % لله أو صابر أطراف السك % % دلهن الدهر درات الحشك % % 18(@)(@@) % لو جاهدته ساعة فلم تنك % كانت كمن صام وصلى ونسك % % 18(@)(@@) % فيه أكال سدك أي سدك % % إن ترك استشرى وإن حك استحك % % 18(@)(@@) % ماوطئت رجل امرىء حيث سلكمستودقات بهميم كالودكيعجلهن الذفق عن حل التكك من كل حوساء إذا جد العركلو أنهااستلقت على شوك الحسك تحت الزناة وجدته كالفنكيا بن الزنا وحدك لا شريك لك إلا أبوك قصرة كالفنكيا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms762# بن البغايا والفراش المشترك يا % % إلا وهن العدواء والببك % % 18(@)(@@) % بهو ترى ما خلفه إلى الحنك % % كالبحر إلا الفلك فيه والسمك % % 18(@)(@@) % ثم مضت مهملة بل ملك % % تسير في الغي الوجيف والرتك % % 18(@)(@@) % يا بن التي أفسق من تحت الفلك % % أملت على كاتبها حتى ارتبك % % 18(@)(@@) % إلا أبوك قصرة كالفنك % % يا بن البغايا والفراش المشترك % % 18(@)(@@) % تحت الزناة وجدته كالفنك % % يا بن الزنا وحدك لا شريك لك % % PageV01P3335 18(@)(@@) % من كل حوساء إذا جد العرك % لو أنهااستلقت على شوك الحسك % 18(@)(@@) % مستودقات بهميم كالودك % % يعجلهن الذفق عن حل التكك % 18(@)(@@) % لو سلكت فيه بعيرا لانسلك % أو سبكت فيه حديدا لانسبك % % 19(@)(@@) % ماأخذ الشاتم إلاماترك % % وهل على الشاتم إلا ماملك % % PageV01P3336 البحر : - 1(@)(@@) % تخذت عرضك مندية أمش به % % كفي إذا غمرت من عرضك الزهك % % 2(@)(@@) % فكفي الدهر لاتنقي أناملها % % من لحمك الغث أو من عرضك الودك % PageV01P3337 البحر : - 1(@)(@@) % ألا ياقاتل الديك % % بتخنيق وتفكيك % % 2(@)(@@) % لكي ينسل في الليل % % بلا علم المماليك % % 3(@)(@@) % إلى الخود وقد أهدى % % لها بعض المساويك % % 4(@)(@@) % مساويك المفاليس % % من الناس المنابيك % % 5(@)(@@) % فوافاها وقد حر % رك منها أي تحريك % % 6(@)(@@) % وقد لاحظها الفا % % سق من بين الشبابيك % % 7(@)(@@) % فشكت في الذي قال % % قد جاء بتشكيك % % 7(@)(@@) % وقد خادعها الغاوقال استدخلي هذافما أحسنه فيك ولا بدلتنورك من بعض المحاريك وأبدي فيشة تفضيإلي الحلق بتحكيك بذيء عتت قدما كأرماح الصعاليكفما تصبر للحقولا تأذي بتشويك وقال ارضى بفتياى فلا بأس بمفتيك أليس النعل لم يخلقلشيء غير تشريك فشكت في الذ % % وي بأفديك وأحميك % % 7(@)(@@) % وقال استدخلي هذا % % فما أحسنه فيك % % 7(@)(@@) % ولا بد لتنو % % رك من بعض المحاريك % % PageV01P3338 7(@)(@@) % وأبدي فيشة تفضي % % إلي الحلق بتحكيك % % 7(@)(@@) % عتت قدما كأرما % % ح الصعاليك % % 7(@)(@@) % فما تصبر للحق % % ولا تأذي بتشويك % % 7(@)(@@) % أليس النعل لم يخلق % % لشيء غير تشريك % % 7(@)(@@) % وقالت طالما قاسى % % اخونا طول تدليك % % 7(@)(@@) % فإن ملكته نفسي % % فمحقوق بتمليك % % 7(@)(@@) % ما إن زال يعلوها % % على تلك الدرانيك % % 7(@)(@@) % بتمريس لثديين % % مرينين بتفليك % % 7(@)(@@) % وتحكيك لشفرين % % حقيقين بتحيك % % 7(@)(@@) % ولكم يكتسي الطيز % له حليه تتريك % % PageV01P3339 7(@)(@@) % يكيلان بقفزان % ضخام لا مكاكيك % % 7(@)(@@) % وقال ارضى بفتياى % % فلا بأس بمفتيك % % 8(@)(@@) % قلت لم تفعل هذا % % قال كي ارضى مليك 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms763# % % 8(@)(@@) % وإبليس لها يدعومجزوء الرمللي صديق جاهلي أخنق الناس لديكأعون الناس لنياك على ظلم منيك بذيء وله في حرمة الجار محايا الشريك قلت لم تفعل هذاقال كي ارضى مليك % % وللشيخ بتبريك % % 8(@)(@@) % لي صديق جاهلي % أخنق الناس لديك % 8(@)(@@) % أعون الناس لنيا % % ك على ظلم منيك % % 8(@)(@@) % وله في حرمة الجا % % ر محايا الشريك % % PageV01P3340 البحر : - 1(@)(@@) % لنا صديق مارد % يكثر خنق الديكه % 2(@)(@@) % قلت أهلا فقد لحا % % ك أهل المملكة % % 3(@)(@@) % فقال دعني إنني % % خرقت تلك الشبكه % 4(@)(@@) % وانحزت عن حزب الهد % % ى وكنت ممن تركه % % 5(@)(@@) % هل هو إلا قولهم % % واها له ما أنيكه % % 6(@)(@@) % والقول ما أنيكه % % أحسن من ما أنوكه % % 7(@)(@@) % فزت بقدر طيب طعمها % % وكعثب زين بتشويك % % 7(@)(@@) % فلا تلمني يا أخيسريع يا قاتل السنور والديكبلي أعناق وتفكيكلله أفعالك تلك التيلحتك من جوع وتدليك ورحت منها طاعما ناعما كأنما فزت بتمليك لله أفعالك تلك التيبت بها فوق الدرانيكفزت بقدر طيب طعمهاوكعثب زين بتشويك قد بخرته لك هرك % بل ادع لي بالبركة % % 7(@)(@@) % يا قاتل السنور والديك % بلي أعناق وتفكيك % % 7(@)(@@) % لله أفعالك تلك التي % % لحتك من جوع وتدليك % % PageV01P3341 7(@)(@@) % لله أفعالك تلك التي % % بت بها فوق الدرانيك % % 7(@)(@@) % هذا الذي أصبحت من أجله % % أفتك من بعض الصعاليك % % 7(@)(@@) % قد بخرته لك هركولة % ومسكته أي تمسيك % % 7(@)(@@) % وقيل ما هذا فأبرزته % % وقلتذا بعض المساويك % % 7(@)(@@) % بل سهم تركي له فضله % يرمي به بعض التنابيك % % 7(@)(@@) % هذا الذي يصبح من ذاقه % % يذل لي ذل المماليك % % 7(@)(@@) % عرد فيشة ضخمة % كأنها بعض المكاكيك % % 7(@)(@@) % إذا رآها رجل ماجن % برك فيها أي تبريك % % 7(@)(@@) % يا رب خود غضة بضة % قد حنكتها أي تحنيك % % 7(@)(@@) % أولجت فيه فيها الذي في استها % % آلة تحنيك وتسويك % % PageV01P3342 7(@)(@@) % ورحت منها طاعما ناعما % كأنما فزت بتمليك % % PageV01P3343 البحر : - 1(@)(@@) % حزني منك يابنة الأملاك % % أي ذل لقيته في هواك % 2(@)(@@) % لم أزل ناسكا فأصبحت في ال % % حب خليعا في حلبة الفتاك % 3(@)(@@) % أين تلك العهود لما التقينا % % يوم شعب الغضا ووادي الأراك % % 4(@)(@@) % ومواثيقنا بأن لست تهوي % ن سوانا ولانحب سواك % % 5(@)(@@) % أخلبت القلوب حتى إذا مكن % ت منا أبعدتها من رضاك % % 6(@)(@@) % لاتسيئي ملك المماليك والمم % % لوك 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms764# ذو واجب على الملاك % % 7(@)(@@) % وارأفي بالأسير أو لا فمني % % بسراح وأنعمي بفكاك % % 8(@)(@@) % واجعلي حظنا لديك من الود % د استماعا من النفوس الشواكي % % 9(@)(@@) % كيف للعين بالرقاد وللقل % % ب بصبر وللقوى بحراك % % 10(@)(@@) % وبأحشائي منك وعد قديم % % وهوى زرعه على الدهر زاك % % PageV01P3344 11(@)(@@) % وسقام أغص محتسي المغتص % ص من مسمعاته بالبواكي % % 12(@)(@@) % برزت في مها تغص بسمطي % % برد بكرة على المسواك % % 13(@)(@@) % واستشاطت من شكونا ثم قالت % % شغلي عن مقالة الأفاك % % 14(@)(@@) % لو به ماشكاه منا لما عر % رضنا في نسيبه للهلاك % % 15(@)(@@) % ثم ولت كالشمس أعلى قضيب % فوق دعص راب على الأوراك % 16(@)(@@) % بأبي تلك حين لج بها الإع % % راض من واصل ومن تراك % % 17(@)(@@) % نال قلبي من حبها مثل مانا % % ل بني هاشم من الأتراك % % PageV01P3345 البحر : - 1(@)(@@) % مقل العين لاعدمت كراك % فيم عرضت مهجتي للهلاك % 2(@)(@@) % إن تكوني أنحلت جسمي فقد % % أبكيت عيني مع العيون البواكي % % 3(@)(@@) % أمرضتني إمراض أجفانك الوط % ف بألحاظك الحداد البواكي % % 4(@)(@@) % يوم أوقعت من خلال سجو % % ف الرقم قلبي من الهوى في شباك % % 5(@)(@@) % ثم أوقعتني ومتعت بالغم % % ض برعي النجوم والأفلاك % % 6(@)(@@) % بأبي السافكات بالعهد منكن % ن دماء الجبابر الفتاك % % 7(@)(@@) % الدقاق الخصور في هيف القد % د عراض الأعجاز والأوراك % % 8(@)(@@) % الرقاق الثغور يبسمن عنهن % ن بروقا لنا لدى التضحاك % % 9(@)(@@) % العذاب الأفواه تشهد بالطي % % ب عن طيبها غصون الأراك % % 10(@)(@@) % المضلات للحلوم من العبا % % د والمفتنات للنساك % % PageV01P3346 11(@)(@@) % كيفما كنت لي فلست ترى % % لي لذة للحياة حتى أراك % % 12(@)(@@) % أنا مذ موقفي لوقت وداع % منك بادي النحول من جراك % % 13(@)(@@) % صرفتك الأيام عني وماتص % % رف قلبي إلى وصال سواك % % 14(@)(@@) % لم ينل صاحب الزنوج من الإس % % لام طرا ما نالني من هواك % % 15(@)(@@) % كنت أرجوك مثل ماكنت بالغي % % ب لضعفي عن هجرهم أخشاك % 16(@)(@@) % فطواك الزمان عني فيا لي % % ت طواني المنون حين طواك % PageV01P3347 البحر : - 1(@)(@@) % بأبي وأمي أنتم % % من عصبة ياآل مالك % 2(@)(@@) % ماللزمان يزفكم % % في كل يوم للمهالك % % 3(@)(@@) % أفناكم إلا تزا % % ل حماتكم بين الشوابك % 4(@)(@@) % ثبتت لكم أعراقكم % حتى ثويتم في المعارك % 5(@)(@@) % بأبي وجوهكم التي % % دميت بأطراف السنابك % % 6(@)(@@) % ولقد تكون أهلة % للناس في الظلم الحوالك % 7(@)(@@) % أنصاب فيكم 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms765# بالردى % % وتسد دونكم المسالك % % 8(@)(@@) % أمست سبيل مزاركم % % ممنوعة من كل سالك % % PageV01P3348 البحر : - 1(@)(@@) % ياأبا قاسم قطعت من العا % % دات ماكان وصله بك أنكى % % 2(@)(@@) % وكفانا مكان مافات منه % % فضل من أضحك الأنام وأبكى % % 3(@)(@@) % وتركناك والذي قد تخير % % ت ولسنا نرى لوصلك تركا % % 4(@)(@@) % وسنزداد في الحفاظ وفي الود % د إذا ازددت في القطيعة محكا % % 5(@)(@@) % إن خير الثمار مارده الأك % ل مردا أنيط ذكراه عنكا % % PageV01P3349 البحر : - 1(@)(@@) % ماضره جدري حل وجنته % % لولا النجوم إذا لم يحسن الفلك % 2(@)(@@) % إن العيون لتشتاق الرياض إذا % % ماالزهر أشرق فيها وهو مشتبك % % 3(@)(@@) % ولن يزيد بهاء تاج مملكة % حتى يرصعه بالجوهر الملك % % PageV01P3350 البحر : - 1(@)(@@) % يامن يعمي على حليلته % % شيبا يريها خضابه حلكا % % 2(@)(@@) % أعجب بتزويرك الخضاب على % % من تتولاه في الخلاء لكا % % 3(@)(@@) % لن تنقل الشيب عن خليقته % % ماعشت حتى تصرف الفلكا % % PageV01P3351 البحر : - 1(@)(@@) % هل حسن في نحلك % % أو جائز في مللك % 2(@)(@@) % لهوك عن مؤملك % % بالأمس في قطربلك % % 3(@)(@@) % مع الفتى الكهل الملك % مؤملي مؤملك % 4(@)(@@) % معولي معولك % % مفضلي مفضلك % % 5(@)(@@) % مبجلي مبحلك % مخولي مخولك % % 6(@)(@@) % مذللي مذللك % % مقتبلي مقتبلك % % 7(@)(@@) % ممثلي ممثلك % % ومعقلي ومعقلك % % 8(@)(@@) % وموئلي وموئلك % % لا ذاكري في نقلك % % 9(@)(@@) % كلا ولا في منزلك % % كلا ولا في نهلك % % 10(@)(@@) % كلا ولا في غزلك % % كلا ولا في جدلك % % PageV01P3352 11(@)(@@) % سأنتحي في عذلك % % أو تنتهي عن نحلك % 12(@)(@@) % وعن دواهي غيلك % % والمتقي من ختلك % % 13(@)(@@) % إذا انبرت من حيلك % % وعش لنا في خولك % 14(@)(@@) % مرفلا في حللك % يلقاك في مستقبلك % % 15(@)(@@) % سؤلك في منتهلك % % مزحزحا عن أجلك % % 16(@)(@@) % مبحبحا في أملك % % مصححا من عللك % % 17(@)(@@) % مسلما من زللك % % مستيئسا من خللك % % 18(@)(@@) % متبرعا في بذلك % % فيك غنى عن بذلك % % 19(@)(@@) % في سكرة من جذلك % % بين مثاني كللك % 20(@)(@@) % على تمادي نغلك % % وما أرى من دغلك % % PageV01P3353 21(@)(@@) % وعطلتي من قبلك % % PageV01P3354 البحر : - 1(@)(@@) % لايحزننك من يمو % % ت فلم يمت من مات قبلك % 2(@)(@@) % مامات إلا من تطا % % ول عمره وأذيق ثكلك % 3(@)(@@) % لا ذاق ثكلك ذائق % حتى يرى في الناس مثلك % % PageV01P3355 البحر : - 1(@)(@@) % ياطيب ريق بات بدر الدجى % % يمجه بين ثناياكا % % 2(@)(@@) % يروى ولا ينهاك عن شربه % % والماء يرويك وينهاكا % % PageV01P3356 البحر : - 1(@)(@@) % الناس كلهم فدى لك % إني رضيتهم فدى لك % PageV01P3357 البحر 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms766# : - 1(@)(@@) % يجود البخيل إذا ما رآك % ويسطو الجبان إذا عاينك % PageV01P3358 البحر : - 1(@)(@@) % لازال يومك عبرة لغدك % وبكت بشجو عين ذي حسدك % 2(@)(@@) % فلئن نكبت لطالما نكبت % بك همة لجأت إلى سندك % % 3(@)(@@) % لو تسجد الأيام ماسجدت % إلا ليوم فت في عضدك % % 4(@)(@@) % يانعمة ولت غضارتها % % ماكان أقبح حسنها بيدك % % 5(@)(@@) % فلقد غدت بردا على كبدي % % لما غدت حرا على كبدك % % 6(@)(@@) % ورأيت نعمى الله زائدة % لما استبان النقص في عددك % % 7(@)(@@) % ولقد تمنت كل صاعقة % لو أنها صبت على كبدك % % 8(@)(@@) % لم يبق لي مما برى جسدي % % إلا بقاء الروح في جسدك % % PageV01P3359 البحر : - 1(@)(@@) % أباعثمان أنت عميد قومك % وجودك للعشيرة دون لومك % 2(@)(@@) % تمتع من أخيك فما أراه % يراك ولاتراه بعد يومك % % PageV01P3360 البحر : - 1(@)(@@) % طباهجة كأعراف الديوك % تروق العين من شرط الملوك % 2(@)(@@) % هلم إلى مساعدتي عليها % % فلست لمثل ذلك بالتروك % PageV01P3361 البحر : - 1(@)(@@) % ونرجس كالثغور مبتسم % له دموع المحدق الشاكي % % 2(@)(@@) % أبكاه قطر الندى وأضحكه % فهو مع القطر ضاحك باكي % % PageV01P3362 البحر : - 1(@)(@@) % أخالد قد أصبحت قيم نسوة % كملن خلاعل السوء مثل كمالكا % % 2(@)(@@) % لعينيك مايفعلن غير مكاتم % % وماذاك إلا من هوان سبالكا % % 3(@)(@@) % نساء إذا ماأظهر الله آية % تحاذر منها الصالحات المهالكا % % 4(@)(@@) % رفعن لمرتاد الزنا أرجل الزنا % % عروضا ويدي الداعيات هنالكا % % PageV01P3363 البحر : - 1(@)(@@) % إذا كنت مضطري إلى القول بالذي % % عتبت له فاعدر وقل في بالعدل % 2(@)(@@) % أرى العرف شربا لا يصح صفاؤه % % إذا وقعت فيه قذاة من المطل % 3(@)(@@) % تأمل أباسهل بعين بصيرة % ولاتخلطن الجد في ذاك بالهزل % 4(@)(@@) % أسخى عن الدار المقيم نعيمها % % سوى أنها شيء ينال على مهل % 5(@)(@@) % أم اختيرت الدنيا على تلك زوجة % لشيء سوى تعجيلها حاجة البعل % 6(@)(@@) % ألا مالحاجات تساعى وحاجتي % % مقيدة تمشي الهوينا على رسل % 7(@)(@@) % وياليتها تمشي الهوينا على الصفا % % ولكنها تمشي العرضنة في الوحل % 8(@)(@@) % تسحبت علما إن لي متسحبا % عليك دميثا في دهاس من الرمل % % 9(@)(@@) % ومالي إدلال عليك بنعمة % سوى نعم أوليتنيها أبا سهل % 10(@)(@@) % وأنت الذي يعتد نعماه منة % لقابلها لا عن غباء ولاجهل % % PageV01P3364 11(@)(@@) % ترى النعمة المسداة منك كنعمة % % عليك تجازيها فدهرك للبذل % % 12(@)(@@) % إذا أنت أنهلت العفاة عللتهم % % فجدوى على جدوى وفضل على فضل % % 13(@)(@@) % ولن يروي 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms767# الساقي حوائم ورده % % إذا لم تكن سقياه علا على نهل % 14(@)(@@) % فلا عدم الوراد منك هشاشة % لسقيهم سجلا رويا على سجل % 15(@)(@@) % رضيتك للخلان إلا لواحد % شهدت له بالفضل في الظرف والعقل % % 16(@)(@@) % مججت له أريا فلما استراثه % % لسعت ولسع المجتني سنة النحل % 17(@)(@@) % فكن نحلة تجدي بغير معرة % وجد معفيا فيه من العدل والعذل % 18(@)(@@) % وفز ببقاء البعد إن بقاءه % % مدى الدهر واستأثر بسابقة القبل % PageV01P3365 البحر : - 1(@)(@@) % ياأبا المستهل ماذا تقول % % في جوارشن جله زنجيل % 2(@)(@@) % لاتضعه فإنك ابن دلال % والدجاج السمين طعم ثقيل % 3(@)(@@) % قل لنا بالذي يزيرك في النو % % م خيال الرغيف كيف تقول % 4(@)(@@) % سلحة في قفاك تنشق عنه % % ثم تبتد عارضيك تسيل % PageV01P3366 البحر : - 1(@)(@@) % أذقتنا ودك حتى إذا % % قلنا لذيذ كدت أن تغلو % % 2(@)(@@) % خفت متى واصلت إملالنا % % فخف إذا هاجرت أن نسلو % % PageV01P3367 البحر : - 1(@)(@@) % أترضى بأن أصبح لم يحل % وقد حال ماعودتنيه من البذل % 2(@)(@@) % أبى الله أن ترضى بتلك خليقة % لأنك أولى بالوفاء من النخل % PageV01P3368 البحر : - 1(@)(@@) % جردت عزما لماء النيل تصرفه % % عن البثوق إلى إسناءة النيل % 2(@)(@@) % تجريدك العزم للأموال تعدلها % % إلى الحقائق عن سبل الأباطيل % 3(@)(@@) % إذا الأصابع مدت نحو ذي منن % مدت إليك بفعال الأفاعيل % % 4(@)(@@) % كما إذا هي مدت نحو ذي لسن % % مدت إليك بقوال الأقاويل % % 5(@)(@@) % جلت مساعيك أن تنثي إذا نثيت % إلا بقيلك أو شرواه في القيل % 6(@)(@@) % ماأحدث الدهر توعيرا لملتمس % إلا دعيت أبا سهل لتسهيل % PageV01P3369 البحر : - 1(@)(@@) % لاح شيبي فرحت أمرح فيه % % مرح الطرف في العذار المحلى % % 2(@)(@@) % وتولى الشباب فازددت ركضا % في ميادين باطلي إذ تولى % % 3(@)(@@) % إن من ساءه الزمان بشيء % % لأحق امرىء بأن يتسلى % % 4(@)(@@) % أترى أن أسوء نفسي لما % % ساءني الدهر لالعمري كلا % % PageV01P3370 البحر : - 1(@)(@@) % أرسلني عاشق بحاجته % فجئت بين الرجاء والوجل % 2(@)(@@) % لاتخجلني بالرد حسبك ما % % ترى بخدي من حمرة الخجل % PageV01P3371 البحر : - 1(@)(@@) % ردني صالح وقال اعتلالا % % أنا أخشى ضراوة السؤال % 2(@)(@@) % خاف فتحي باب السؤال عليه % % أغلق الله عنه باب السؤال % PageV01P3372 البحر : - 1(@)(@@) % كأن له في الجو حبلا يبوعه % % إذا ماانقضى حبل أتيح له حبل % 2(@)(@@) % يعانق أنفاس الرياح مودعا % وداع رحيل لا يحط له رحل % PageV01P3373 البحر : - 1(@)(@@) % إذا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms768# كان امرؤ لأتي مال % قرارا كنت أنت له مسيلا % % 2(@)(@@) % وقالوا لو أطلت المدح فيه % % فقلت لهم ولم أظلم فتيلا % % 3(@)(@@) % لعمر أبيكم إن ابن يحيى % % لأقرب مستقى من أن أطيلا % % 4(@)(@@) % ولو أني قربت به جرورا % عبأت لورده مرسا طويلا % PageV01P3374 البحر : - 1(@)(@@) % يابن التي كانت إذا سئلت % عما استبان بها من الحبل % 2(@)(@@) % قالت رياح وهي كاذبة % % وتعللت في ذاك بالعلل % 3(@)(@@) % مامهرت مهرا ولانكحت % إذ ذاك في حلي ولا حلل % 4(@)(@@) % أترى الرياح تحولت حبلا % إن الرياح لجمة النقل % % 5(@)(@@) % أقعت عليه فيشة من شكله % فطحاء يمضي مثلها بمثله % 5(@)(@@) % كروس يمضي بآد أصله % إذا مضى الرمح بذلق نصله % 5(@)(@@) % أبني رياح إن نعمتكمرجزكروس يمضي بآد أصلهإذا مضى الرمح بذلق نصله أقعت عليه فيشة من شكلهفطحاء يمضي مثلها بمثله بذيء % % عار الزمان وعرة الدول % PageV01P3375 البحر : - 1(@)(@@) % له عرس له شركاء فيها % % كسابلة تضمهم سبيل % % 2(@)(@@) % يحل لبعلها مائة سواها % % لأن نصيبه منها قليل % % 3(@)(@@) % إذا لم يرضها نشزت عليه % % فتحرص أن يكون لها خليل % 4(@)(@@) % وهل عرض الفتى إلاغبيط % % يميل غبطها لولا العديل % % PageV01P3376 البحر : - 1(@)(@@) % تذكرت ماسخى بنفسي عنكم % % فلم أره مالا ولم أره أهلا % % 2(@)(@@) % بلى خطرات من طويلة كلما % % خطرن وجدت الوعر من بعدكم سهلا % % 3(@)(@@) % إذا مثلت لي لحية الليف خطرة % % سلوتكم كرها وأن كنت لاأسلا % % 4(@)(@@) % وماخلت نفسي تقتضيني لقائكم % % فأمنحها لولا شناءته المطلا % % 5(@)(@@) % أرى قربكم عدل الحياة وروحها % % ويعدل عندي قربه الموت والقتلا % % 6(@)(@@) % وكيف تلذ العين وجه حبيبها % % وفيها قذاة لاتزال لها كحلا % % 7(@)(@@) % خذوا بإباقي لحية الليف أو خذوا % % بتشريده عني معزمكم فضلا % % 8(@)(@@) % لئن كان للصبيان أم دميمة % تخنقهم صرعا وتوسعهم خبلا % % 9(@)(@@) % فإن أخانا لحية الليف بعلها % % ألا قبح الله الحليلة والبعلا % % PageV01P3377 البحر : - 1(@)(@@) % إذا المرء لم يظهر لطالب رفده % عبوسا ولابشرا فليس بطائل % 2(@)(@@) % وذاك امرؤ لا باخل هم بالندى % % فسيىء ولاسمح فسر بسائل % PageV01P3378 البحر : - 1(@)(@@) % رب كعاب في حجاب لم تزل % مثل الغزال عنقا ومكتحل % 2(@)(@@) % لم تكتحل مقلتها سوى الكحل % % ولايحلي جيدها إلا العطل % % 3(@)(@@) % مازلت منها في مطال وعللرب كعاب في حجاب لم تزل % مثل الغزال عنقا ومكتحل % 4(@)(@@) % لم تكتحل مقلتها سوى 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms769# الكحل % % ولايحلي جيدها إلا العطل % % 5(@)(@@) % مازلت منها في مطال وعلل % حتى إذا ماقدر البين نزل % % 6(@)(@@) % خلست منها نظرة على وجل % % آخرها أولها من العجل % % 7(@)(@@) % ثم أجنتها غيابات الكلل % % فكان مانلت وكانت في المثل % % 8(@)(@@) % كالشمس غامت يومها حتى الطفل % % ثم انجلت والشطر منها قد أفل % % 9(@)(@@) % فنلت منها نظرة على عجل % % مص رب كعاب في حجاب لم تزل % 10(@)(@@) % مثل الغزال عنقا ومكتحل % لم تكتحل مقلتها سوى الكحل % % PageV01P3379 11(@)(@@) % ولايحلي جيدها إلا العطل % % مازلت منها في مطال وعلل % 12(@)(@@) % حتى إذا ماقدر البين نزل % % خلست منها نظرة على وجل % % 13(@)(@@) % آخرها أولها من العجل % % ثم أجنتها غيابات الكلل % % 14(@)(@@) % فكان مانلت وكانت في المثل % % كالشمس غامت يومها حتى الطفل % % 15(@)(@@) % ثم انجلت والشطر منها قد أفل % % فنلت منها نظرة على عجلهن % % PageV01P3380 البحر : - 1(@)(@@) % لاتغافل يا أبا الصق % % ر وليست فيك غفله % 2(@)(@@) % إن حرمانك من لم % % تحرم العافين قبله % % 3(@)(@@) % مثلة منك به في الن % ناس تنسي كل مثله % 4(@)(@@) % وجزاء المدح بالمث % % لة شيء لست أهله % % PageV01P3381 البحر : - 1(@)(@@) % رمضان يزعمه الغواة مبارك % صدقوا وجدك إنه لطويل % 2(@)(@@) % شهر لعمرك لا يقل قليله % وكذا المبارك ليس منه قليل % % 3(@)(@@) % تتطاول الأيام فيه بجهدها % % فكأن عهد الأمس منه محيل % % 4(@)(@@) % لو أنه للقاطعين مسافة % لحسبت أن الشبر فيها ميل % % PageV01P3382 البحر : - 1(@)(@@) % أقاسم يامن لم يزل ذا نقيبة % بجد وحد منه غير كليل % 2(@)(@@) % أتيتك مشتطا عليك مثقلا % لأنك حمال لكل ثقيل % 3(@)(@@) % ولي حاجة في أن تنيل وأن ترى % % مكاني بلا من مكان منيل % 4(@)(@@) % وفي أن يكون النيل نيلا معجلا % كثيرا تراه لي أقل قليل % % 5(@)(@@) % وأن تتلقاني مجلا مصانعا % كما صانع الجاني ولى قتيل % 6(@)(@@) % وأن تتولاني إذا اعتل مذهبي % برفق طبيب محسن بعليل % 7(@)(@@) % وفي أن إذا أطرقت إطراق خادم % طفقت تراعيني بعين خليل % % 8(@)(@@) % وفي أن تمد الظل لي وتديمه % % فما ظل خير زائل بظليل % 9(@)(@@) % وفي هذه كل اشتطاط وإنها % % لتعظم إلا عند كل جليل % % 10(@)(@@) % وفي أنني قدرت فيك احتمالها % % شفيع وجيه عند كل نبيل % % PageV01P3383 11(@)(@@) % ومابرحت نفسي تنقى ثمارها % % وتعطيكها إعطاء غير بخيل % 12(@)(@@) % وتحتقر الحظ الجزيل تقيسه % % بقدرك ياوهاب كل جزيل 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms770# % % 13(@)(@@) % ألم تر أني إذ تضاءل سائل % تضاؤل مقموع الرجاء ذليل % 14(@)(@@) % سموت بنفس لم تضاءل مخافة % لتفعل بي أفعال غير ضئيل % % 15(@)(@@) % وطال مقالي في احتكامي وربما % % رأيت طويل القول غير طويل % 16(@)(@@) % ومالي عديل في اشتراطي شرائطي % % وإنك للغادي بغير عديل % 17(@)(@@) % فإن يك من آبائك الخير سنة % فمثلك من لم يعدها لسبيل % 18(@)(@@) % وإلا فكن لي أولا في استناتها % % فما زلت مهديا بغير دليل % % 19(@)(@@) % رفعتك فوق الفاعلين بسومها % % فلا ترضى مما دونها ببديل % 20(@)(@@) % لكيما يقول الله والحق والهوى % % جميل تقصى فعل كل جميل % PageV01P3384 21(@)(@@) % وماأنا فيما رمته بمفند % وماأنا فيما قلته بمحيل % 22(@)(@@) % وكيف اقتصادي في سؤاليك بعدما % % أفضت من الخيرات كل سبيل % 23(@)(@@) % قالوا هجاك أبوحفص الوراق ولحيته % % فقلت ماأنصفاني في الذي فعلا % % 24(@)(@@) % ليعتزل أحد القرنين ثم يرى % % حربي إذا قذفت أرجاؤها الشعلا % % 25(@)(@@) % أبى له اللؤم أن يغني بوحدته % % وأن يصادف إلا عاجزا وكلا % % 26(@)(@@) % ماكان قرني لولا عون لحيته % % فقل له عني احلقها وكن رجلا % % 27(@)(@@) % فإن غدت أجرة الحلاق تعوزههزجنزا بعض المجانينعلى شيخ له مال وقد ضمهما الحمام والمجنون صوال وكان الشيخ رجراجا له لحم وأوصال فأوعى جوفه المجنون جردنا له حال فصاح الشيخ بالناسوفي الحمام أجيال فلما كثر القيلعلى المجنون والقال ووافته من ا % % فقد أبحت يديه نتفها خصل % % 27(@)(@@) % إذا المجنون قد قام % وللغرمول دلدال % 27(@)(@@) % ووافته من الأيدي % % كرانيب وأسطال % 27(@)(@@) % فلما كثر القيل % % على المجنون والقال % PageV01P3385 27(@)(@@) % فصاح الشيخ بالناس % وفي الحمام أجيال % 27(@)(@@) % فأوعى جوفه المجنو % % ن جردنا له حال % % 27(@)(@@) % وكان الشيخ رجراجا % له لحم وأوصال % % 27(@)(@@) % نزا بعض المجانين % % على شيخ له مال % 27(@)(@@) % يعيد القول مرات % % يرونا نشتهي قالوا % % 27(@)(@@) % وقد ضمهما الحما % % م والمجنون صوال % PageV01P3386 البحر : - 1(@)(@@) % أصبحت بين خصاصة وتجمل % والمرء بينهما يموت هزيلا % % 2(@)(@@) % فامدد إلي يدا تعود بطنها % % بذل النوال وظهرها التقبيلا % % 3(@)(@@) % نبت البقاع بجنب عبدك ضاحيا % فامهد لعبدك في ذراك مقيلا % % 4(@)(@@) % وأفي عليه الظل بعد زواله % لازال ظلك ماحييت ظليلا % % PageV01P3387 البحر : - 1(@)(@@) % ياأبا أيوب هذي كنية % من كنى الأنعام قدما لم تزل % % 2(@)(@@) % لقد وفق من كناكها % % وأصاب الحق فيها وعدل % 3(@)(@@) % أنت شبه للذي تكنى 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms771# به % % ولبعض الخلق من بعض مثل % 4(@)(@@) % لست ألحاك على ماسمتني % % من قبيح الرد أو منع النفل % % 5(@)(@@) % قد قضى قول لبيد بيننا % % إنما يجزى الفتى ليس الجمل % % 6(@)(@@) % كم حذوناك لترقى في العلا % % وأبى الله فلا تعل هبل % % PageV01P3388 البحر : - 1(@)(@@) % يارجلا أوفى على كل رجل % يامن متى تقصر الناس بطل % 2(@)(@@) % يامن غدا يسلك في أهدى السبل % % ياذا الأيادي والسحابات الهطل % % 3(@)(@@) % مابالنا نجفى على رخص الرسل % عندكم وما شغلتم بشغل % 4(@)(@@) % لابأس إن كان صفاء لم يحل % % حاشاكم غدر بني الدنيا الملل % % 5(@)(@@) % أنى تزولون ونحن لم نزل % % كيف يكون النقص أولى بالكمل % 6(@)(@@) % وبهجة الزينة أولى بالعطل % أو ينكل الماضون أو يمضي النكل % % 7(@)(@@) % أو يغفل الأذكون أو يذكو الغفل % % أقسمت لاتفعل إلا ماجمل % % 8(@)(@@) % وكنتم قدما بني وهب فعل % % كل فعال لا يراه من نذل % % 9(@)(@@) % بل من علت رتبته ومن نبل % % لم يأتكم من دبر ولاقبل % % 10(@)(@@) % ولاعن الأيمان منكم والشمل % % ولامن العلو ولامما سفل % % PageV01P3389 11(@)(@@) % لوم ولالؤم ولستم بالعجل % % ولالنعمى عن ولي بالنقل % % 12(@)(@@) % ولاعلى الضارع بالأسد البسل % % لكم عن الحاسر أظفار كلل % % 13(@)(@@) % لاتعرف البغي وأنياب فلل % إنك إن ناقشتني ولم تؤل % % 14(@)(@@) % إلى مساهاة المساميح البذل % % وملت عني وعدلت في العدل % % 15(@)(@@) % وضعت خدي ضارعا ولم أصل % % ولم أهزهز حربتي ولم أجل % 16(@)(@@) % حربك لا يشهدها المرء الفضل % % لاسيما من دق جدا وضؤل % % 17(@)(@@) % بل من علته درعه ومن جزل % % وماجمالي للفراق بالذلل % % 18(@)(@@) % بل هي عن ذاك وثيقات العقل % % وعن سبيل عاند عنك ضلل % % 19(@)(@@) % وهي إذا أمتك أطلاق ذمل % % نوازع لا يترعن للجدل % % 20(@)(@@) % فأين لي عنك فأقلني أو فقل % % حملتني ماليس في وسع البزل % % PageV01P3390 21(@)(@@) % نهض به ولم أخن ولم أغل % % لاهول إن صدك عني لم يهل % % 22(@)(@@) % تلك التي تبدي المشيب في القذل % % سم مثل ماقد سمتني من لم تعل % % 23(@)(@@) % ولاتناقش من له فيك أكل % % واعف ودع لؤم القرى لمن رذل % % 24(@)(@@) % قد كان عندي طيبا من النزل % % ذاك التحفي فأعده إن سهل % 25(@)(@@) % بل في المعالي حمله وإن ثقل % وليس أخلاقك بالجند الخذل % 26(@)(@@) % المستعينين بها ولا الجهل % % لا تجعلني عظة مثل الفتل % % 27(@)(@@) % تضيء للناس 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms772# وهم فوق المثل % % محترقات للمفاريح الجذل % % 28(@)(@@) % أي امرىء وازنته فلم يشل % قلنا ولو نصبر عنكم لم تقل % % PageV01P3391 البحر : - 1(@)(@@) % ليطمعك في رجعات الملو % % ل أن الملول يمل الملالا % % 2(@)(@@) % يمل القطيعة معتادها % % كما مل من قبل ذاك الوصالا % % 3(@)(@@) % ولكن ملولك من لا يري % % ع فاصرمه أولا فرج المحالا % % 4(@)(@@) % يداوي الأطباء ذا علة % وأنى يداوون داء عضالا % % PageV01P3392 البحر : - 1(@)(@@) % يا بن يحيى غدرت غدرا مبينا % ورماك الزمان بالإقلال % 2(@)(@@) % أتراني قنعت منك بعذر % لم تجده إلا بلطف احتيال % 3(@)(@@) % طالما عشت خافضا فتجهزأو فأعتب يجتمع الدهر وفور الأعراض والأموال طويل تلقيت أبواب السماء بغرة مسومة فاستقبلتك تهلل وكف معاذ الله من بخل مثلهاأترفع للسقيا فتسقى وتبخل % لركوب العوارم الأمثال % % 3(@)(@@) % أو فأعتب يجتمع الده % % ر وفور الأعراض والأموال % 3(@)(@@) % طويل تلقيت أبواب السماء بغرة % مسومة فاستقبلتك تهلل % 3(@)(@@) % وكف معاذ الله من بخل مثلها % % أترفع للسقيا فتسقى وتبخل % 4(@)(@@) % تجورون أحيانا وأنتم أولو عدل % كما لو هجاكم شاعر حل قتله % 5(@)(@@) % هون عليك فإن الأمر وافقها % % وكان منها اعتناق فيه تقبيل % 5(@)(@@) % وشيب بشوب من عيارتها % % باد وإن قالت الحسناء مجهول % 5(@)(@@) % تساكرت كي يقول القائلون لها % % لا يسلب الحر إلا وهو مقتول % PageV01P3393 5(@)(@@) % صبرا جميلا فإن الصب مصطبر % على القرون وإن ألوى بها الطول % 5(@)(@@) % نذل ثوابا لك الحسناء موعدها % % لكن نائلها للمرد مبذول % 5(@)(@@) % واعلم جزيت أبا العباس نافلة % أن المحب له تاج وإكليل % 5(@)(@@) % إحدى المصائب فاصبر يا بن أم لها % % وهل على حدثان الدهر تعويل % 5(@)(@@) % تيجان أهل التصابي من قرونهم % قدما ومن صفوة فيها الأفاعيل % 5(@)(@@) % قالت محب وقد عض الزيار بها % % بين الندامى وسيف النيك مسلول % 5(@)(@@) % فاصبر على التاج أن التاج محتمل % وإن تحملت تاجا طوله ميل % 5(@)(@@) % غدا عليها بنو اللذات فابتذلوا % % من سؤل نفسك ما صان السراويل % 5(@)(@@) % يا أحمد بن سعيد لو بصرت بها % % وذيلها لأيور القوم منديل % 5(@)(@@) % وأحمد إلهك واسأله سلامتها % % واقبل فإن قليل الحب مقبول % % PageV01P3394 5(@)(@@) % زل الحمار وكانت تيك منيته % % إن الحمار حمار السوء موحول % % 5(@)(@@) % ولا تحرم على الفتيان متعتها % % فليس في الفتك تحريم وتحليل % 5(@)(@@) % غنت نهارا وباتت وهي زامرة 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms773# % حتى الصباحوللأحوال تحويل % 5(@)(@@) % باتت عروسا بازواج وبات لها % % عرس لعمرك لم يشهده جبريل % 5(@)(@@) % نبئت أن محبا بات كعثبها % % زيدا وزيد بحكم النحو مفعول % 5(@)(@@) % فيه مصائب منها ما أصيب بها % % وفي المصائب للميزان تثقيل % 5(@)(@@) % يا أحمد بن سعيد لا تمت جزعا % فالحب طعمانممرور ومعسول % 5(@)(@@) % ع كذاك فأوفوا مدحه دية القتل بسيطيا أحمد بن سعيد لا تمت جزعا فالحب طعمانممرور ومعسول فيه مصائب منها ما أصيب بهاوفي المصائب للميزان تثقيل نبئت أن محبا بات كعثبهازيدا وزيد بحكم النحو مفعول باتت عروسا بازواج وبات لهاعر % % 5(@)(@@) % يا أحمد بن سعيدس لو بصرت بها % % إذ الأكف لساقيها خلاخيل % 5(@)(@@) % تحضنت خلتي عودا فحضنها % % طفلا أتاها وفي أطفال تطفيل % PageV01P3395 5(@)(@@) % والجاثليق مع الإنجيل يدرسه % كأن عثنونه الكشخان إنجيل % % 5(@)(@@) % لله فتيان لهو مال مائلهم % % إلى التعاليل والعيش التعاليل % % 5(@)(@@) % كانت أفاعيل مما أنت كارهه % وشيعتها بمكروه أقاويل % % 5(@)(@@) % ألية يا كنى الفيل صادقة % لقد تحملت ما لا يحمل الفيل % 5(@)(@@) % أعزر علي بأن سرت بليلتها % % وأنت صب عميد القلب متبول % % 5(@)(@@) % فاحد على نعمة التكثير واهبها % % إذا لم يقع بدل التكثير تقليل % 5(@)(@@) % قد كثر الله فيها وهي سالمة % والشمل مجتمع والحبل موصول % % 5(@)(@@) % فقائل لك قولا لا أطوله % وفي الأقاويل تقصير وتطويل % % 5(@)(@@) % وغنني مسلف إياك تهنئتي % % وللصنائع تعجيل وتأجيل % 5(@)(@@) % كأنني بك والخلان يؤمئذ % يهنئونك جيلا بعده جيل % PageV01P3396 5(@)(@@) % إذا ترعرع فهو الدهر همته % وفي يديه لى الأبيات منقول % 5(@)(@@) % طفل اراد وصيفا كيسا فبكى % % حتى أتاه مليح القد مجدول % % 5(@)(@@) % فانعم بحبلاك واعلم أنها جزر % للنيك قد فعلت فيها الأفاعيل % 5(@)(@@) % ياتون لم يدعهم داع سوى كمر % لها حقائق أولاها الأباطيل % 5(@)(@@) % يخال في فتن اللاهي ضلالته % % وإنما فتن الجهل الأضاليل % % 5(@)(@@) % جر الصبي الذي كانت تناغمه % لنا صببا وللتنزيل تأويل % 5(@)(@@) % كأنني بك قد سوئلت حينئذ % % فقلت قيلا سديدا دونه القيل % % 5(@)(@@) % في بيتهاوالذي حج الحجيج له % % وهل جنى الغي عن جانبيه معدو % % 5(@)(@@) % يا ليت شعري وعلم الغيب محتجيب % في بيت من ذلك المولود مكفول % % 5(@)(@@) % واعدد لها سبعة أو تسعة كملا % % يقدم عليم دهين الرأس مكحول % PageV01P3397 5(@)(@@) % لا تمتعض التي صاحت قوابلها 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms774# % % قد التقت دجلة العوراء والنيل % 5(@)(@@) % ما زال يحرث منها النيك أسفلها % % والنيك يحرث ما لا يحرث البيل % % 5(@)(@@) % ولا تغاضب لتسفيل القريض بها % % فكل ما لقيت بالأمس تسفيل % 5(@)(@@) % ألم تسبل سبيلا لا عدول بها % % عما يحبون والحيرات سبيل % 5(@)(@@) % وما يريد بغاة النيكش من رجل % فيما أتى لطريق النيك تسهيل % 5(@)(@@) % ولا تكلف فتى اودى بعذرتها % % عقلا فإن دم الأستاه مطلول % 5(@)(@@) % لاتبخلن بمال لست مالكه % % فلا يفوتنك تبخيل وتضليل % 5(@)(@@) % أما قد احسن استدعاء حامله % % طفل على بطن أم الطفل محمول % PageV01P3398 البحر : - 1(@)(@@) % من عذيري من الخلائف ضلوا % % في سليمان عن سواء السبيل % 2(@)(@@) % وضعوا الرفد والكرامة منه % % في مقام العقاب والتنكيل % 3(@)(@@) % نقلوه على الهزائم بغدا % % د كأن قد أتى بفتح جليل % % 4(@)(@@) % ماأراهم بذلك الفعل إلا % % زهدوا الناس في البلاء الجميل % % 5(@)(@@) % من يخوض الردى إذا كان من فر % ر أثابوه بالثواب الجزيل % % PageV01P3399 البحر : - 1(@)(@@) % فدتك النفس وهي أقل بذل % صلي حسن المقال بحسن فعل % 2(@)(@@) % أريني منك في أمري نهوضا % يبين أن شغلك بي كشغلي % % 3(@)(@@) % أراك إذا حثثتك في كتابي % % ذكرت عناية ليست بهزل % % 4(@)(@@) % وإن أغفلت حثك نمت عني % % ولست لذاك يا أملي بأهل % % 5(@)(@@) % تحروا في فكاك الأسر عني % % تحري مثلكم في فك مثلي % % PageV01P3400 البحر : - 1(@)(@@) % ياشبيه البدر في الحس % % ن وفي بعد المنال % 2(@)(@@) % جد فقد تنفجر الصخ % % رة بالماء الزلال % PageV01P3401 البحر : - 1(@)(@@) % تخذتكم درعا وترسا لتدفعوا % % نبال العدا عني فكنتم نصالها % % 2(@)(@@) % وقد كنت أرجو منكم خير ناصر % على حين خذلان اليمين شمالها % % 3(@)(@@) % فإن أنتم لم تحفظوا لمودتي % % ذماما فكونوا لاعليها ولالها % % 4(@)(@@) % قفوا موقف المعذور عني بمعزل % وخلوا نبالي والعدا ونبالها % % 5(@)(@@) % فكم من أعاد قد نصلت رماتها % % وكم من رجال مااستنبت اعتزالها % % 6(@)(@@) % وماأوحشتني وحدة مع مذلة % إذا الحرب صفت خيلها ورجالها % % 7(@)(@@) % هي النفس إما أن تعيش بغبطة % وإلا فغنم أن تزول زوالها % % 8(@)(@@) % عفاء على ذكر الحياة إذا حمت % على المرء إلا رنقها وسمالها % % 9(@)(@@) % قل لمن ألبس الجمال جمالا % % بالمعاني وهيبة وجلالا % % 10(@)(@@) % أيها البدر لاتزل في كمال ال % % أمر بدرا وفي النماء هلالا % % PageV01P3402 11(@)(@@) % كيف كانت عقبى اقتصادك كانت % % صحة مستفادة واندمالا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms775# % % 12(@)(@@) % واعتدالا من المزاج كما أو % % تيت في الخلق والخلاق اعتدالا % % 13(@)(@@) % فعل الله ذاك أنك مازل % % ت المرضي ماارتضى فعالا % % 14(@)(@@) % ياعلي المكان لا يتعالى % % كوضيع مكانه يتعالى % % 15(@)(@@) % شكر الله بذلك القرب للنا % % س وإغناء فضلك السؤالا % % 16(@)(@@) % ماتزال القريب من كل عاف % يشتكي خلة ويشكو هزالا % % 17(@)(@@) % ولعمري لئن قربت لقاء % ونوالا لقد بعدت منالا % % 18(@)(@@) % ولقد أوجبت عليك يد الل % ه حق أن تحسن الأعمالا % % 19(@)(@@) % شكر أن فضلتك مرأى ورأيا % ومحلا حتى فضلت الرجالا % % 20(@)(@@) % جعل الله طينة الناس صلصا % % لا وأجراك سائحا سلسالا % % PageV01P3403 21(@)(@@) % وبحقي أقول فيك بأني % % لم أجد موعد المنى فيك آلا % % 22(@)(@@) % لم تزل مانحي سؤالا وطورا % مانحي عشرة أراها نوالا % % 23(@)(@@) % عشرة تملأ القلوب نسيما % ونعيما ونخوة واختيالا % % 24(@)(@@) % ونوالا ينيلني كل سؤل % ويقيني الخضوع والتسآلا % % 25(@)(@@) % فمتى ماأردت كنت جنوبا % ومتى ماأردت كنت شمالا % % 26(@)(@@) % وتمام اليد استماعك فضلا % من كلامي لا يعجب العذالا % % 27(@)(@@) % إنما الحسن نسخة فيك خطت % بيد الله فامتثلها امتثالا % % 28(@)(@@) % وامتثال الجميل مافي حلاه % % نسخه من جماله الإجمالا % % 29(@)(@@) % لك نفس وطينة لاتذما % % ن فشبه بجوهريك الفعالا % % 30(@)(@@) % شاكرا إن غدوت معطى قبولا % % واقتبالا مقابلا إقبالا % % PageV01P3404 31(@)(@@) % ولما قلت هذه مستزيدا % صلة مستجدة بل وصالا % % 32(@)(@@) % واعتذاري من امتياحيك ذنب % فأقل عثرتي عمرت مقالا % % 33(@)(@@) % قد لعمري أتيت جرما عظيما % باعتذاري وقد أسأت المقالا % % 34(@)(@@) % واعتذاري من اعتذاري بوجه % أنت أعديته الحياء الزلالا % % 35(@)(@@) % فغدا يكثر امتياحك في اليو % % م وأمسى يبلني إخضالا % % 36(@)(@@) % عهد كفى بفضل كفيك عهد % يمنع السائل الملح السؤالا % % 37(@)(@@) % غير أني أرى الجوائز وبلا % وأرى الرزق ديمة وظلالا % % 38(@)(@@) % فاتر دائم وجم مخل % وأخو الحزم يكره الإخلالا % % 39(@)(@@) % واجتماع الرفدين فهو محال % عند قوم ولن تراه محالا % % 40(@)(@@) % وقليل يدوم أرجى وأحجى % % بمقل ينفل الأنفالا % % PageV01P3405 41(@)(@@) % أنا عبد عدوت طوري وأصبح % % ت كأني لاأعرف الإقلالا % % 42(@)(@@) % وأدلت خليقتي وبناني % % حين صادفت حاملا إدلالا % % 43(@)(@@) % كلما جدت لي تبعتك في الجو % % د فبدرت يمنة وشمالا % % 44(@)(@@) % ليس إلا لأن نفسي تريني % % كل شيء بجود كفيك مالا % % 45(@)(@@) % وكذا أنتم لكم كل يوم % % مستنيل إذا أنيل أنالا % % 46(@)(@@) % تمنحون اللهى وتغذوننا الجو % % د فينثال بالعطايا انثيالا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms776# % % 47(@)(@@) % فارتهن خدمتي بإجراء جار % أرتضيه كفاية واتصالا % % 48(@)(@@) % والذي أرتضيه جزء صغير % ولك السؤدد العظيم احتمالا % % 49(@)(@@) % فأزح علتي فإن كفافي % % يمنع العذر من أراد اعتلالا % % 50(@)(@@) % إن مقداره متى تزنوه % تجدوه من إلفكم مثقالا % % PageV01P3406 51(@)(@@) % قل مقدار ماسألت من الرز % % ق وإن هول احتكامي وهالا % % 52(@)(@@) % ومتى شئت أن تزيد فماذا % % يمنع الغيث أن يسح السجالا % % 53(@)(@@) % أو يرد الفرات أو يردع السي % % ل إذا وافق المسيل فسالا % % 54(@)(@@) % ليس في وسع قوتي منعي المف % % ضال في دولة الغنى الإفضالا % % 55(@)(@@) % ياحيا سح مزنه الوابل الهطا % % ل أردفه ديمة مهطالا % % 56(@)(@@) % ياغياثي إذا استرثت غياثي % % وثمالي إذا فقدت الثمالا % % 57(@)(@@) % إن ذاك الكمال فيك غريم % يتقاضاك في الأيادي الكمالا % % 58(@)(@@) % والعطايا مجددات لكفي % % ك فجدد لغرس كفيك حالا % % 59(@)(@@) % آل وهب هنيتم هبة الل % ه فما زلتم لها أشكالا % % 60(@)(@@) % لكم هيبة تشرد بالأس % د وعدل يستنزل الأوعالا % % PageV01P3407 61(@)(@@) % قلت إذ ردت الأمور إليكم % % نزل الملك داره المحلالا % % 62(@)(@@) % كانت الأرض ظلمة وحرورا % أوسعا الناس فتنة وضلالا % % 63(@)(@@) % فاخترعتم من الذكاء شموسا % وابتدعتم من السماح ظلالا % % 64(@)(@@) % قد نظرنا بأعين صافيات % صادقات إذا مخيل أخالا % % 65(@)(@@) % فوجدنا فضولكم صفوات % ووجدنا فضول قوم فضالا % % 66(@)(@@) % كم رجاء فيكم أثار جمالا % وعطاء منكم أناخ جمالا % % 67(@)(@@) % لابرحتم مؤملين منيلي % % ن نوالا يحقق الآمالا % % 68(@)(@@) % يرتجي فضلكم مرج ويتلو % % علكم بالفواضل الإنهالا % % 69(@)(@@) % فتشدون لابن بؤسى رحالا % وتحطون لابن نعمى رحالا % % 70(@)(@@) % إن تكونوا علوتم وعلا النا % % س فلستم وغيركم أمثالا % % PageV01P3408 71(@)(@@) % سادة الناس كالجبال وأنتم % كالنجوم التي تفوق الجبالا % % 72(@)(@@) % يممت ربعكم حداة خفاف % من رياح تزجي سحابا ثقالا % % 73(@)(@@) % من يخف من زوال نعمى عليه % % آل وهب فلن تخافوا زوالا % % 74(@)(@@) % عشقت نعمة الإله أخاكم % % وفتاه فما تريد الزيالا % % 75(@)(@@) % في أبي القاسم المحبب والقا % % سم مايمنع المللول الملالا % % 76(@)(@@) % لم نجد عاشقا إذا عدل المع % % شوق في حكمه يريد انتقالا % % 77(@)(@@) % إن رأت نعمة نظير أخيكم % % وابنه فلتبدل الأبدالا % % 78(@)(@@) % لست ألحى ألية حاسديكم % غير أني أقول طلقا حلالا % % 79(@)(@@) % جعلت تلكم الخدود نعالا % لكم الدهر إن صلحن نعالا % % 80(@)(@@) % لي منكم موالي الله مولى % مثله إن حكاه مثل يوالى % % PageV01P3409 81(@)(@@) % ماوجدناه للرغائب 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms777# محتا % % لا وإن كان للعلا محتالا % % 82(@)(@@) % قاسم قاسم العطايا الصفايا % % زاده الله بالعلا استقلالا % % 83(@)(@@) % سائلي عن أبي الحسين بدا الصب % % ح فأغنى أن تستضيء الذبالا % % 84(@)(@@) % ذاك شخص مهيأ لاختيال % وهو يختال أن يرى مختالا % % 85(@)(@@) % ذو عقود أبين إلا انعقادا % وحقود أبين إلا انحلالا % % 86(@)(@@) % فترى عرضه عليه مصونا % وترى ماله عليه مذالا % % 87(@)(@@) % ولما المرء صائنا بكريم % % أو يرى المرء صائنا بدالا % % 88(@)(@@) % تم ذاك الجمال والحسن فيه % % بخلال لم تشك منها اختلالا % % 89(@)(@@) % عيب تلك الخلال إن لم يملح % ن بعيب يكون فيهن خالا % % 90(@)(@@) % مالها عوذة سواي فإني % % أردع العين أن تصيب الجمالا % % PageV01P3410 91(@)(@@) % هاكها والها إليك عروبا % % تتثنى رشاقة ودلالا % % 92(@)(@@) % لم أقل هاكها لشيء سوى العا % % دة والشعر يركب الأهوالا % % 93(@)(@@) % منطق يطرح الكنى ويسمي % % من يكنى ولا يبالي مبالا % % 94(@)(@@) % جاهلي كما علمت ولكن % لاتراه يعامل الجهالا % % 95(@)(@@) % واعتدادي عليك بالمدح شيء % جعل العقل دونه لي عقالا % % 96(@)(@@) % ليس للمدح في معانيك إلا % % أنه زاد نورهن اشتعالا % % 97(@)(@@) % أنت كالسيف ماؤه منه والشع % % ر يدا صيقل تجيد الصقالا % % 98(@)(@@) % والذي يكتسى بك الشعر أسنى % % من سناه عليك لاإشكالا % % 99(@)(@@) % وأبسط العذر في اختصار ولي % لم يخف من إطالة إملالا % % 100(@)(@@) % لاولا خال أن حقك يقضى % % بيسير وذاك مالن يخالا % % PageV01P3411 101(@)(@@) % حاشى لله أن إخالك تستث % % قل مما يزينك الأثقالا % % 102(@)(@@) % بل متى لم تكن تحب وتهوى % % من أماديح مادحيك الطوالا % % 103(@)(@@) % أم متى لم أر الكثير قليلا % لك بالحق نية وانتحالا % % 104(@)(@@) % غير أني إذا بلغت مرادي % % لم أزد فيه بعد ذاك قبالا % % 105(@)(@@) % فأردت اقتصاص حالي فلم أل % ق إلى غيره من القول بالا % % 106(@)(@@) % لو قصدت المديح في هذه الط % % بة ماطلتك الجراء مطالا % % 107(@)(@@) % قائلا كلما فعلت وأفعا % % لك لاشك تغمر الأقوالا % % 108(@)(@@) % غير أني أقول حتى يرى الل % ه مضاهاة قولي الأفعالا % % 109(@)(@@) % ثم إني أقول من بعد هذا % % إنك الواحد العزيز مثالا % % 110(@)(@@) % واست الفتى سفلة فغايتها % % ووكدها سفلة يشاكلها % % PageV01P3412 110(@)(@@) % ومقالي بطول قدري ولو قلوطائف باسته على طبق يبغي لها حربة تطاولهامعامل كل عصبة سفلتولا ترى علية يعاملها قلنا له لم هواك في سفل الناس 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms778# وشر الأمور سافلها أفرقة وافقتك طاعتهاأم عصبة فضلت غراملها قال وجدت الكعوب % ت مقالي بطول قدرك طال % % 110(@)(@@) % وطائف باسته على طبق % يبغي لها حربة تطاولها % % 110(@)(@@) % معامل كل عصبة سفلت % ولا ترى علية يعاملها % % 110(@)(@@) % قلنا له لم هواك في سفل النا % % س وشر الأمور سافلها % % 110(@)(@@) % أفرقة وافقتك طاعتها % % أم عصبة فضلت غراملها % % 110(@)(@@) % قال وجدت الكعوب من قصب % مختارها شدة أسافلها % % PageV01P3413 البحر : - 1(@)(@@) % وفارس ماشئت من فارس % يهزم صفين من القمل % 2(@)(@@) % إذا سرى في الجيش أغناهم % % ضريطه جبنا عن الطبل % 3(@)(@@) % إقدامه تضبيعه حذره % % من هوج فيه ومن خبل % 4(@)(@@) % يحول أو يثول من صفرة % % حتى تراه عازب العقل % 5(@)(@@) % ينزع طول الدهر من جبنه % لكنه نزع على مهل % PageV01P3414 البحر : - 1(@)(@@) % غضبت لي السماء والأرض والنا % % س على ابن اللبون إسماعيل % 2(@)(@@) % ولما أسخط السماء مع الأر % % ض مع الناس غير سخط الجليل % % 3(@)(@@) % أنكر الله أن يرى مثل مدحي % % في أبي الفقر وهو غير منيل % % 4(@)(@@) % فرماه بكوكب هاشمي % كان أدهى له من السجيل % % 5(@)(@@) % ولقد كاد مااستطاع ولكن % جعل الكيد منه في تضليل % 6(@)(@@) % سال ذاك النجيع من ذلك العب % % د ودمع الباكيه كل مسيل % % 7(@)(@@) % وليطل معول عليه عويلا % إنه في لظى طويل العويل % 8(@)(@@) % لاسقى الله جسمه من حيا المز % % ن ولاروحه من السلسبيل % % PageV01P3415 البحر : - 1(@)(@@) % أيا من له الشرف المستقل % من جوده العارض المستهل % 2(@)(@@) % ويامن أضاء كشمس الضحى % % فأضحى عليه به نستدل % 3(@)(@@) % بوجهك ذاك الجميل آمتثله % % في الفعل بي واستمع مايمل % 4(@)(@@) % فمن مثله تستمل الفعا % % ل كف كريم عدت تستمل % 5(@)(@@) % أتهتز في ورق ناضر % وليس لعبدك في ذاك ظل % 6(@)(@@) % ولم يأت ذنبا ترى شخصه % % عيانا ولامثله من يزل % 7(@)(@@) % فإن قلت قصر فيما عليه % % فهو المقصر وهو المخل % % 8(@)(@@) % ولكن عفوك عفو يحل % % إذا كان قدرك قدرا يجل % % 9(@)(@@) % وإني أريبك يامن به % % دفاعي الريوب التي قد تظل % % 10(@)(@@) % ولكن ظنك بي لا يزال % أسوأ ظنك أو أستقل % % PageV01P3416 11(@)(@@) % وحتى نقدم مالاتشك % في أنني معه لاأضل % 12(@)(@@) % هنالك توقن أني الولي % وأني المحب وأني المجل % 13(@)(@@) % إذا أنت أوليتني صالحا % فأنت على غيب شكري مطل % 14(@)(@@) % وهل يلتقي 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms779# في سليمي الصدور % % ذكرى صنيع جميل وغل % 15(@)(@@) % بحالي ضنى من توانيكم % % فحتى متى سادتي لاتبل % 16(@)(@@) % وتضييع مثلي مالا يحل % والله يكره مالا يحل % 17(@)(@@) % أحقا رضيت بأن الغنى % % عدو لعبدك والفقر خل % 18(@)(@@) % وأني إذا ماأعز امرؤ % % فلي مستضيم ولي مستذل % 19(@)(@@) % وسيبك يغمر ظلابه % وسيفك عن ظالم لا يكل % 20(@)(@@) % أيعجز فضلك عن خادم % وأنت بأمر الورى مستقل % PageV01P3417 21(@)(@@) % وبذري يسير كبذر القراح % واعلم بأني قراح مغل % % 22(@)(@@) % أغل الثناء الذي تعلمو % % ن أن ليس منه قليل يقل % 23(@)(@@) % فصلني بما فيه لي عصمة % فإن جنابك مجن مظل % 24(@)(@@) % وأعزز وليك إن القبي % % ح كل القبيح ولي يذل % % 25(@)(@@) % ولاتلحيني في أن أذل % صفرا من الإل فالود إل % 26(@)(@@) % وطولك أحظى شفيع لدي % ك حين يمل الشفيع الممل % % 27(@)(@@) % إذا كنت هشا تلقي السؤا % % ل وجها يهل إليه المهل % % 28(@)(@@) % فإني عليك بأن ليس لي % % أداة المدل مدل مدل % % 29(@)(@@) % ولم لاوأنت رحيب الفنا % % ء بحر ينيخ إليك المكل % 30(@)(@@) % ترى الحمد ينشر مسكا يفو % % ح والمال يطوى لحاما تصل % PageV01P3418 31(@)(@@) % وتعتد شكري الذي يستقل % ل فوق جداك الذي لا يقل % PageV01P3419 البحر : - 1(@)(@@) % أقبلت دولة هي الإقبال % فأقامت وزال عنها الزوال % 2(@)(@@) % دولة ليس يعدم الدهر فيها % % باطل مزهق وحق مدال % % 3(@)(@@) % طالعت للعيون فيها مصابي % % ح أضاءت لضوئها الآمال % 4(@)(@@) % شمس دجن ومشتر غير منحو % % س وبدر متمم وهلال % 5(@)(@@) % ملك وابنه ومدره ملك % وابنه هكذا يكون الكمال % PageV01P3420 البحر : - 1(@)(@@) % لاتعذل النفس في تعجلها % % فإننا خلقتان من عجل % 2(@)(@@) % وإن فوت الذي أبادره % أرمض لي من مردد العذل % % 3(@)(@@) % أخشى كسادي على النساء إذا % % أسننت والسن جمة الخبل % % 4(@)(@@) % وإنني من كسادهن على % % سني لأولى بالخوف والوجل % % 5(@)(@@) % كم من نشاط لهن عندي في ال % % يوم وكم بعد ذاك من كسل % % 6(@)(@@) % والعيش طعمان عند ذائقه % مر التوالي مستعذب الأول % 7(@)(@@) % من عسل تارة ومن صبر % لهفي لتأخير عقبة العسل % 8(@)(@@) % لو أنها أخرت لطاب بها ال % % عيش وإن جاوزت شفا الأجل % 9(@)(@@) % أعجزنا كرنا الشباب وأن % % تثمر صدقا مواعد الأمل % % 10(@)(@@) % كم تحسب العيش دار عر % جتنا وإنما العيش دار منتقل % PageV01P3421 11(@)(@@) % فبادر الدهر بالمناعم وال % لذات واحذر 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms780# من وشك مرتحل % % 12(@)(@@) % فإن تعذرن أن يجبنك بالقو % وة فاحتل لطائف الحيل % % PageV01P3422 البحر : - 1(@)(@@) % ذكر الأخفش القديم فقلنا % % إن للأخفش الحديث لفضلا % % 2(@)(@@) % وإذا ماحكمت والروم قومي % % في كلام معرب كنت عدلا % % 3(@)(@@) % أنا بين الخصوم فيه غريب % لاأرى الزور للمحاباة أهلا % % 4(@)(@@) % ومتى قلت باطلا لم ألقب % % فيلسوفا ولم أسوم هرقلا % % 5(@)(@@) % بدأ النحو ناشئا فغذاه % % أحدث الأخفشين فانصات كهلا % % 6(@)(@@) % وتعاصى فقاده بيديه % % أحدث الأخفشين فانقاد رسلا % % 7(@)(@@) % أيهذا المسائلي بعلي % زادك الله بالمعالم جهلا % % 8(@)(@@) % أنت كالمستثير شمسا بنار % ولعمري للشمس للعين أجلى % % 9(@)(@@) % لاتسائل به سواه من الن % % ناس تجده بحضرة الحفل حفلا % % 10(@)(@@) % قائلا بالصواب يقرع فصا % بجواباته وينطق فصلا % % PageV01P3423 11(@)(@@) % كلما شذت الفروع عن الأص % % ل ثناها فألحق الفرع أصلا % % 12(@)(@@) % وتراه تدينه كل عوصا % % ء كما دانت الحليلة بعلا % % 13(@)(@@) % ياظماء إلى الصواب ردوه % % يسقكم بالصواب علا ونهلا % % 14(@)(@@) % هو بحر من البحور فرات % ليس ملحا وليس حاشاه ضحلا % % 15(@)(@@) % قل له يامقومي وسمي % % وكنيي ومن غدا لي شكلا % % 16(@)(@@) % قد أردت الإطناب فيك فقالت % لي غاياتك البعيدة مهلا % % 17(@)(@@) % ورأيت اليسير يكفي من الحل % ي إذا النصل كان مثلك نصلا % % 18(@)(@@) % لك من نفسك الحلى اللواتي % % أنفت أن يكون حليك نحلا % % 19(@)(@@) % ولعمري ماأنت كالسيف صقلا % حين ننضوك بل مضاء وصقلا % % 20(@)(@@) % منظري لناظر مخبري % لمريغ لديك نقضا وفتلا % % PageV01P3424 21(@)(@@) % ذو أفاع لمن يعاديك صم % كائنات لمن يواليك نحلا % % 22(@)(@@) % تقلس الأري والسمام ونا % % هيك بهذا وذا شفاء وخبلا % % 23(@)(@@) % فدع الشكر لي فلم أكسك المد % % ح سليبا ولم أحلك عطلا % % 24(@)(@@) % أنت من لم يزل يحلي ويكسي % % كل مدح فلست توسم غفلا % % 25(@)(@@) % وحرام علي عرضك بسل % % أبدا مارأيت عرضي بسلا % % 26(@)(@@) % فالزم الصدق إنه للفريقي % % ين نجاة والختل يجزيك ختلا % % 27(@)(@@) % وخفي الحديث ينمي فيحيي % بعدما ماتت الضغائن ذحلا % % PageV01P3425 البحر : - 1(@)(@@) % ياعصمة لست منها باغيا بدلا % % يانعمة لست عنها باغيا حولا % % 2(@)(@@) % يابن الوزيرين يامن لاانصراف له % % عن سده خللا أو عفوه جللا % % 3(@)(@@) % يامن إذا قلت فيه القول سددني % % إجلاله فكفيت الزيغ والخطلا % % 4(@)(@@) % ومن إذا ما فعلت الفعل أيدني % % إقباله فوقيت العثر والزللا % % 5(@)(@@) % كم فعلة لك بي أرسلتها مثلا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms781# % ومدحة فيك لي أرسلتها مثلا % % 6(@)(@@) % أحللتني قلل الآمال في دعة % أحلك الله من آمالك القللا % % 7(@)(@@) % لله طول سيجزي غير ما كذب % % طولا قصرت به ساعاتي الطولا % % 8(@)(@@) % تبخل البحر نفسي ماعرضت لها % % أو تزدري البدر أو تستصغر الجبلا % % 9(@)(@@) % بل كل ذلك يجري في خواطرها % % وماجهلت ولاضاهيت من جهلا % % 10(@)(@@) % وسائلين بحالي كيف صورتها % % فقلت قد نطقت حالي لمن عقلا % % PageV01P3426 11(@)(@@) % قالوا أتأمل مأمولا فقلت لهم % % يؤمل المرء مالم يبلغ الأملا % % 12(@)(@@) % مثل المسافر لا ينفك من سفر % حتى إذا هو وافى رحله نزلا % % 13(@)(@@) % وقد بلغت الذي أملت من أمل % يابن الوزير وماأعطى ومابذلا % % 14(@)(@@) % فما أؤمل إلا طول مدته % % أطالها الله حتى يرغم الأجلا % % 15(@)(@@) % أبى الحسين أخي الحسنى وفاعلها % % تم البيان تمام البدر بل فضلا % % 16(@)(@@) % لاتجمعن إلى ذكراه نسبته % % فقد كفاك مكان النسبة ابن جلا % % 17(@)(@@) % هل يطلب الصبح بالمصباح طالبه % % مااستهلك الصبح عن عين ولاخملا % % 18(@)(@@) % رحلت ظني إلى جدواه بل ثقتي % % فأخر الوعد لكن قدم النفلا % % 19(@)(@@) % سقيا لها رحلة ماكان أسعدها % % لقد كفتني طوال المسند الرحلا % % 20(@)(@@) % صادفت منه بليغا في مواهبه % تعطي يداه تفاريق الغنى جملا % % PageV01P3427 21(@)(@@) % وليس يقنع من تمت بلاغته % % أن يوجز القول حتى يوجز العملا % % 22(@)(@@) % جرى نداه إلى غاياته طلقا % سر العفاة وساء السادة النبلا % % 23(@)(@@) % مازلت في بدر منه وفي حلل % لم تمتثل عذرا منهم ولاعللا % % 24(@)(@@) % حتى اكتسى من مديحي فيه أوشية % شتى فرحنا جميعا نسحب الحللا % % 25(@)(@@) % فتى وإن كان كهلا في جلالته % % كهل وإن كان غضا غصنه خضلا % % 26(@)(@@) % ماظن يوما به إتيان سيئة % حقت ولاظن فيه صالح بطلا % % 27(@)(@@) % ومارجا فضله راج فأخلفه % % ولاتمناه إلا قال قد حصلا % % 28(@)(@@) % إذا التقى سيبه والطالبون له % لاقوه بحرا ولاقى شكرهم وشلا % % 29(@)(@@) % يلقى الوجوه بوجه ماؤه غدق % لاتسأم العين منه النهل والعللا % % 30(@)(@@) % المال غائبه والحمد آئبه والمج % % د صاحبه إن قال أو فعلا % % PageV01P3428 31(@)(@@) % لم يزه بالدولة الزهراء حاش له % % من شيمة تستحق اللوم والعذلا % % 32(@)(@@) % وكيف يلقاك مزهوا بدولة % من صانه الله كي تزهى به الدولا % % 33(@)(@@) % يارب زد في معاني ماتخوله % ولاتزد في معانيه فقد كملا % % 34(@)(@@) % قل للإمام 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms782# أدام الله غبطته % لامح نورك من بدر ولاأفلا % % 35(@)(@@) % ياخير معتضد بالله معتمد % عليه معتقد مااستودع المللا % % 36(@)(@@) % لولاك لم تلبس الدنيا شبيبتها % % ولااكتسى الدين سيماه ولااكتهلا % % 37(@)(@@) % أضحى بيمنك دين المصطفى نسكا % محضا كما أضحت الدنيا به غزلا % % 38(@)(@@) % مالت علينا غصون العيش مثقلة % حملا وقام عمود الحق فاعتدلا % % 39(@)(@@) % يامن وجدناه فردا في سياسته % % إن صال عدل ميلا أو قضى عدلا % % 40(@)(@@) % يامؤنس الإنس والوحش التي ذعرت % ومن أخاف الأسود السود والجبلا % % PageV01P3429 41(@)(@@) % في قاسم خادم كاف كفاك به % % كأنه لك من بين الورى جبلا % % 42(@)(@@) % مبارك لاتمج العين طلعته % % ولايرى الرائي في مخبوره فشلا % % 43(@)(@@) % مثل الحسام الذي يرضيك رونقه % وإن ضربت به في موطن فصلا % % 44(@)(@@) % لو امتريت به الأرزاق أنزلها % % ولو قرعت به الأجال مانكلا % % 45(@)(@@) % ممن يبين عن لب بعارضة % والطرف يعرب عن عتق إذا صهلا % % 46(@)(@@) % وإن جرى الأرقش النضناض في يده % % جرى شجاع يمج السم والعسلا % % 47(@)(@@) % تجيل طرفك فيما خط حامله % فلا ترى رهلا فيه ولاقحلا % % 48(@)(@@) % كأن تعديل أشباه يصورها % % تعديل أهيف لم يسمن ولاهزلا % % 49(@)(@@) % خط إذا قابلته العين قابلها % % روض الربيع إذا ما طل أو وبلا % % 50(@)(@@) % كأنما الشكل والإعجام شامله % من البيان ولم يعجم ولاشكلا % % PageV01P3430 51(@)(@@) % ولو وصلت به التدبير أمكنه % أن يفتق الرتق أو أن يرتق الخللا % % 52(@)(@@) % تكفي من النبل أحيانا مكايده % وربما خلفت أقلامه الأسلا % % 53(@)(@@) % قال الأماثل عجبا باختياركه % % لافاق سهمك من رام ولانصلا % % 54(@)(@@) % ومارميت ونبل القوم طائشة % إلا أصبت وإلا قيل لاشللا % % 55(@)(@@) % ماعيب عبدك إلا أن قيمته % تنهى أخا العدل أن يعتده خولا % % 56(@)(@@) % يكاد يحميك من أرفاق خدمته % إشفاق نفسك أن تلقاه مبتذلا % % 57(@)(@@) % أبا الحسين ادرعها إن ملبسها % % باق عليك إذا ماملبس سملا % % 58(@)(@@) % ياقابل الناس والمقبول عندهم % % يامقبلا نحو باب الخير مقتبلا % % 59(@)(@@) % لك القبول مع الإقبال لا ارتحلا % % عن عقر دارك ماعاشا ولاانتقلا % % 60(@)(@@) % يحتال قوم لرفد الرافدين لهم % % لكن رفدك محتال لي الحيلا % % PageV01P3431 61(@)(@@) % ماإن يزال نوال منك يسألني % % حمدي وأي نوال قبله سألا % % 62(@)(@@) % إن وهزيك بالأشعار أنسجها % % للغافل المتعدي جد من غفلا % % 63(@)(@@) % أو الشجاع الذي لاشيء يفزعه % % ولاترد عواديه إذا حملا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms783# % % 64(@)(@@) % إذا استجيش من الطوفان ناجية % ماإن أرى لي بها حولا ولاقبلا % % 65(@)(@@) % أستوهب الله حظا من معونته % % على دفاعي ندى كفيك إن حفلا % % 66(@)(@@) % لو اتبع الناس أمري غير معتبر % إذا لعدوني المقدامة البطلا % % 67(@)(@@) % كن في مدى المجد للأمجاد كلهم % % صدرا وكن في مدى أغمارهم كفلا % % 68(@)(@@) % تبقى ويمضون عمرا لاانقطاع له % % مفضلا بعطاء الله ما اتصلا % % 69(@)(@@) % أمورك الدهر أمثال وأمثلة % إذا أمور الناس أصبحت مثلا % % PageV01P3432 البحر : - 1(@)(@@) % قل لأيوب والكلام سجال % والجوابات ذات يوم تدال % 2(@)(@@) % اسكتوا بعدها فلا تذكروا الش % شؤم حيا فأنتم الآجال % 3(@)(@@) % أنا شؤمي فيما تقولون عز % زال ولكن شؤمكم قتال % 4(@)(@@) % بالذي أدرك المؤيد منكم % % وابن سعدان تضرب الأمثال % % 5(@)(@@) % زرتموه والصالحات عليه % % مقبلات فأدبر الإقبال % 6(@)(@@) % حين درت له أفاويق دنيا % % ه دلفتم له فكان الفصال % 7(@)(@@) % إن شؤما حلت به عقدة العه % % د لشؤم تزول منه الجبال % % 8(@)(@@) % ليس بدعا من الحوادث أن يع % % زل وال وأن تموت الرجال % 9(@)(@@) % إنما البدع أن تزول أمور % لم يكن يهتدي إليها الزوال % 10(@)(@@) % كالذي حاق بالمؤيد منكم % بعدما نوطت به الآمال % PageV01P3433 11(@)(@@) % ذلك الشؤم يابني أم شيخ % يمكن القائلين فيه المقال % 12(@)(@@) % ذاك شؤم فيه سمام الأفاعي % % ناجز النقد ليس فيه مطال % 13(@)(@@) % ذاك شؤم كالسيل عفى على ال % % قطر جلال كما يكون الجلال % % 14(@)(@@) % ذاك شؤم لو جاور البحر يومي % % ن لأمسى وليس فيه بلال % % 15(@)(@@) % ذاك شؤم لو كان في جنة الخل % % د لحالت بأهلها الأحوال % 16(@)(@@) % ذاك شؤم لا يثلم الدهر حدي % % ه ومالم يزل فليس يزال % 17(@)(@@) % ذاك شؤم شؤم البسوس وغبرا % % ء وشؤم الورى عليه عيال % % 18(@)(@@) % كالذي أدرك المؤيد منكم % % وهو في رأس نجوة لا ينال % % 19(@)(@@) % وهاذر يبلغني هدره % لو شئت عفى قطره سيلي % % 20(@)(@@) % أعملنه يركض في غيه % والخيل تبقي الجري للخيل % PageV01P3434 21(@)(@@) % ياأيها الأعمى الذي سبني % % محلل مانلت من نيل % 22(@)(@@) % شعرك لاتثبت آثاره % من غرة اليوم إلى الليل % 23(@)(@@) % مدب ذر في نقا هائل % % مرت به معصفة الذيل % % 24(@)(@@) % عفا فما يسطيع يقتافه % ناظر لقمان ولاقيل % % 25(@)(@@) % لوكان في شلوك لي مبطش % لقد دعت أمك بالويل % PageV01P3435 البحر : - 1(@)(@@) % خليلي قد عللتماني بالأسى % % فأنعمتما 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms784# لو أنني أتعلل % 2(@)(@@) % أللناس آثاري وإلا فما الأسى % % وعيشكما إلا ضلال مضلل % 3(@)(@@) % وماراحة المرزوء في رزء غيره % % أيحمل عنه بعض مايتحمل % 4(@)(@@) % كلا حاملي أوق الرزيئة مثقل % وليس معينا مثقل الظهر مثقل % 5(@)(@@) % وضرب من الظلم الخفي مكانه % تعزيك بالمرزوء حين تأمل % 6(@)(@@) % لأنك يأسوك الذي هو كلمه % بلا جرم لو أن جورك يعدل % PageV01P3436 البحر : - 1(@)(@@) % وماراحة المرزوء في رزء غيره % % أمشركه في حمل ما قد تحملا % % 2(@)(@@) % كلا حاملي أوق الرزية مثقل % وليس معينا مثقل الظهر مثقلا % % PageV01P3437 البحر : - 1(@)(@@) % حذار عرامي أو نظار فإنما % % يظلكم قطع من الرجز مرسل % 2(@)(@@) % ولاتحسبن الصلح أنصل التي % % ولاأنني في هدنة العلم أغفل % 3(@)(@@) % ولكنني مستجمع الحلم مغبر % أفوق نبلي تارة وأنصل % 4(@)(@@) % فإن هاجت الهيجاء أو عاد عودها % % على بدئها لم يلق مني أعزل % 5(@)(@@) % ولي بعد إعطائي الوثيقة حقها % % بدائه لا يخذلنني حين أعجل % 6(@)(@@) % تلافي بي الشأو المغرب وادعا % وتسبق بي ماقدم المتمهل % PageV01P3438 البحر : - 1(@)(@@) % العدل فرض وبذل الفضل نافلة % يابن الكرام فعدلا ثم إفضالا % % 2(@)(@@) % ملكت مالك جودا لا يقام له % % والعدل أفضل ماملكته المالا % % 3(@)(@@) % أعطيت قوما ومااستكفيتهم عملا % أسنى عطاء وماجاءوك سؤالا % % 4(@)(@@) % وحظ كتابك الأشقين أن بخسوا % % حقوقهم وهم الأوفون أعمالا % % 5(@)(@@) % كتاب دولتك الميمون طائرها % % أضحوا وهم أسوأ الكتاب أحوالا % % 6(@)(@@) % عبيد خدمتك المعطوك جهدهم % في غاية الجهد إقتارا وإقلالا % % 7(@)(@@) % فاعطف عليهم بفضل منك ينعشهم % % ياواحد الناس إحسانا وإجمالا % % 8(@)(@@) % صن منيصونك عن ثقل تحمله % % يزدك صونا ويحمل عنك أثقالا % % 9(@)(@@) % لاتحتقرهم وإن أصبحت فوقهم % % فالسمك بالأس مدعوم وإن طالا % % 10(@)(@@) % فارفق بأس بناء ذروته % فقد غدوت ومانالوه زلزالا % % PageV01P3439 11(@)(@@) % ولا يلح لاح أبا غانم % فعول الكرائم قوالها % % 11(@)(@@) % بصرت بفحل على خالد % فقال وكم حكمة قاله % % 11(@)(@@) % أخالك مستنكرا فعلتي % % فقلت لعمري وفعالها % % 11(@)(@@) % فقال ولكنني عارف % أصيب وأركب أمثالها % % 11(@)(@@) % وماذا على طالب لذة % بأية جارحة نالها % % 11(@)(@@) % أتنقم إن سفلت كفتي % % لرجحانها ذاك أعلى لها % % 11(@)(@@) % أم العيب حملي رماح الكما % % ة لا زلت ما عشت حمالها % % 11(@)(@@) % وهل عائب الأرض أن حملت % من الجن والإنس أثقالها % % 11(@)(@@) % كذا فليعد رجال العلا % % أقاويل تشبه أفعالها % % 11(@)(@@) % إن البناء متى مادت قواعدهمتقارب بصرت 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms785# بفحل على خالد فقال وكم حكمة قالهأخالك مستنكرا فعلتيفقلت لعمري وفعالها فقال ولكنني عارف أصيب وأركب أمثالهاوماذا على طالب لذة بأية جارحة نالها أتنقم إن سفلت كفتيلرجحانها ذاك أعلى لها % % مال البناء ولن يبقى إذا مالا % % PageV01P3440 البحر : - 1(@)(@@) % ياأيها الهارب من دهره % أدركك الدهر على خيله % 2(@)(@@) % يسوق من نفرته طرة % إلى مدى يقصر عن ثيله % % 3(@)(@@) % فوجهه يأخذ من رأسه % أخذ نهار الصيف من ليله % 4(@)(@@) % قردة نردة نواة حصاة % بومة ثومة عظام بوالي % % 4(@)(@@) % مثل الذي يرقع من جيبهخفيف قصرت شنطف وقلت وذلتغير بظر تجره كالطحال ضيقت عينها ووسع فوهاومشق استها وثقب المبالفهي شيء كأنما صاغة اللهلصفع القفا وقفد القذال وهي تختال بين برقع قبح وقميص من الضنى والهزال وإذا ما تن % % وهيا بما يأخذ من ذيله % % 4(@)(@@) % قصرت شنطف وقلت وذلت % غير بظر تجره كالطحال % 4(@)(@@) % ضيقت عينها ووسع فوها % % ومشق استها وثقب المبال % % 4(@)(@@) % فهي شيء كأنما صاغة الله % لصفع القفا وقفد القذال % % 4(@)(@@) % وإذا ما تنادرت رخص الثل % % ج وأضحى فحم الغضا وهو غال % 4(@)(@@) % قالت الخلق كلهم قد قلوني % % قلت أعييت حيلة المحتال % PageV01P3441 4(@)(@@) % لو غدا طول بظرها لقناة الظ % ظهر منها لألحقت بالطول % % 4(@)(@@) % بنت سبعين بل ثمانين بل تس % % عين بل ضعفها من الأحوال % % 4(@)(@@) % ضامر وجه طيزها غير تر % % كي ولكن ينموزجي السؤال % % 4(@)(@@) % صاح بي عمرها وقد غازلتني % % لا تعرج بدارس الأطلال % % 4(@)(@@) % طالبتني بأن أنيك وما القر % % د ولو حل نيكه بحلال % 4(@)(@@) % قلت ميلي إلى القرود بصغر % ليس لفق النكال غير النكال % 4(@)(@@) % وهي تختال بين برقع قبح % وقميص من الضنى والهزال % PageV01P3442 البحر : - 1(@)(@@) % كريم كثرت قدما % % وطابت فيه أقوالي % % 2(@)(@@) % فما قلل غرامي % % ولا كثر أموالي % % 3(@)(@@) % إذا عانيت مدحيه % أراه ذاك إغفالي % % 4(@)(@@) % إلى أن أزمع السير % % وقد أزمع إهمالي % % 5(@)(@@) % فإن يظعن أبو الصقر % % وقد أخلف آمالي % % 6(@)(@@) % فإن الله لي باق % ولن يحبط أعمالي % % 7(@)(@@) % أبا الصقر ألا أولى % % لتأميلي وأولى لي % % 8(@)(@@) % لقد طاول إعراضك % % بالمعروف إقبالي % % 9(@)(@@) % عقلت الرفد عن كفي % % وسارت فيك أمثالي % % 10(@)(@@) % لئن رحت وما حس % ن إحسانك من حالي % % PageV01P3443 11(@)(@@) % وأغفلت مجازاتي % % وتمجيدك أشغالي % % 12(@)(@@) % لما حاسنت 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms786# إحساني % % ولاجاملت إجمالي % % 13(@)(@@) % وحسبي أن رأت عيني % % على مثلك إفضالي % % 14(@)(@@) % لقد أفرطت في رفعي % % بلا عمد وإجلالي % % PageV01P3444 البحر : - 1(@)(@@) % تفرست في الشطرنج حتى عرفتها % % فإن صح رأيي فهي بالوعة العقل % 2(@)(@@) % إليها يغيض العقل ماشاب صفوه % % من الهذيانات الشنيعة والهزل % 3(@)(@@) % وماذاك في الشطرنج عيبا لأنه % % عناء عظيم إن جنحنا إلى العدل % 4(@)(@@) % أليس عناء أنها آلة الفتى % % لتصفية العقل المشوب من الجهل % % 5(@)(@@) % بلى إن ترويق الشراب من القذى % % لنفع وتخليص الخيار من الرذل % PageV01P3445 البحر : - 1(@)(@@) % قد أناسي الهم تجوا % % ه بصفراء شمول % 2(@)(@@) % تجذل البال وتغتا % % ل مدى الهم الطويل % 3(@)(@@) % وتبقي جدة اللذ % ذات في عين الملول % 4(@)(@@) % أستشف الروضة الخض % % راء عن شمس الأصيل % 5(@)(@@) % ولقد يلهيني الطي % % ر بترجيع الهديل % PageV01P3446 البحر : - 1(@)(@@) % لاأسرق الشعر وغيري قاله % يكفيني ارتجاله انتحاله % PageV01P3447 البحر : - 1(@)(@@) % أرى لعبة الشطرنج إن هي حصلت % أحق أمور الناس ألا يحصلا % % 2(@)(@@) % تعلة توابين جاعا وأرملا % % بباب قليل خيره فتعللا % % PageV01P3448 البحر : - 1(@)(@@) % وذكرك في الشعر مثل السنا % % د والخرم والخزم أو كالمحال % 2(@)(@@) % وإيطاء شعر وإكفائه % وإقوائه دون ذكر الرذال % 3(@)(@@) % وماعيب شعر بعيب له % % كأن يبتلى برجال السفال % % 4(@)(@@) % يتاح الهجاء لهاجي الهجا % % ء داء عضال لداء عضال % % PageV01P3449 البحر : - 1(@)(@@) % لاتصدفا عن دمن المنازل % اللائي أصبحن قرى النوازل % % 2(@)(@@) % مستضعفات لصبيب هاطل % % طورا وطورا لسفي حافل % % 3(@)(@@) % من كل أحوى قصف الأرامل % % وكل عجلي ذات ذيل ذائل % % 4(@)(@@) % حتى كأن لم تك بالأواهل % صاول منها الدهر غير صائل % 5(@)(@@) % كالثائر الطالب بالطوائل % فلم يرع عن دمن ذلائل % 6(@)(@@) % خواشع أطلالها خوامل % ولن تراه غافلا عن غافل % 7(@)(@@) % ولاإذا عامل بالمجامل % لادر در الدهر من معامل % % 8(@)(@@) % مجامل من ليس بالمجامل % % مماحل من ليس بالمماحل % % 9(@)(@@) % ملتحف المكر على نياطل % % مشتمل الشوط على مقاول % 10(@)(@@) % يهدم مايبني بلا معاول % % عوجا خليلي من العياهل % % PageV01P3450 11(@)(@@) % عوجة راعي منزل لآهل % % نلبس بقايا الخلع السوامل % % 12(@)(@@) % من المغاني لامن السرابل % % قد تحفظ الأبراد في الرعابل % % 13(@)(@@) % سقيا لها إذ نحن في غياطل % % من عيشنا ذي الظلل الظلائل % 14(@)(@@) % كالبكر الطلات والأصائل % % في نفحات الشمأل البلائل % % 15(@)(@@) % واها لها والظل غير زائل % % والدهر لم يثقل على الكواهل % % 16(@)(@@) % مرا على جناتنا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms787# الذوابل % % نبك مع الورق بها الهوادل % % 17(@)(@@) % معاهد الأيام والليائل % % لاالسود تالله ولا الأطاول % % 18(@)(@@) % ميلا إليها ميلة الممائل % % لاتعرضا عنها بوجه خاذل % % 19(@)(@@) % بحق أدماناتها الخوازل % % أبكارهن الغيد والمطافل % % 20(@)(@@) % وإن توجدنا على البخائل % المستمنحات بلا وسائل % % PageV01P3451 21(@)(@@) % صفو الهوى من مهجة المغازل % % الموقظات للهوى الغوافل % % 22(@)(@@) % الفارغات الهمم الشواغل % % التابلات المرء غير التابل % % 23(@)(@@) % والنافثات السحر سحر بابل % % بالأعين الصحائح العلائل % % 24(@)(@@) % واها لها من أعين كلائل % معدودة في عدد المناصل % % 25(@)(@@) % سلبن من أصورة الخمائل % % مكاحلا تغني عن المكاحل % % 26(@)(@@) % خط لها كحل بلا ملامل % % ساءت ظباء الوحش من بدائل % % 27(@)(@@) % بالمخرسات ألسن الخلاخل % % إخراسهن ألسن العواذل % % 28(@)(@@) % اللائي يمددن إلى المناول % % بيضا سباطا ليس بالعوامل % % 29(@)(@@) % غير جليفات ولاهزائل % % يصلن راحا عطر الجداول % % 30(@)(@@) % يالك من راح ومن أنامل % % نوائش ألبابنا نوائل % % PageV01P3452 31(@)(@@) % تخالها بدهة عن الخائل % % سبائكا ركبن في وذائل % 32(@)(@@) % تجنى بها حبة قلب الذاهل % أنذرتك البيض فقف أو وائل % % 33(@)(@@) % هن العدا في صورة الخلائل % وأين تنجو من غرام داخل % % 34(@)(@@) % تلك اللطيفات من المداخل % % تسمو إلى الأملاك في المعاقل % % 35(@)(@@) % من بقر مبثوثة الحبائل % % للأسد في آجامها البواسل % % 36(@)(@@) % ياللمجدات بنا الهوازل % % الشافيات الخبل والخوابل % % 37(@)(@@) % القاطعات القيظ في الغلائل % والقر في الخز وفي المراجل % % 38(@)(@@) % بطن بالسمور والحواصل % تلك الحوالي لابل العواطل % % 39(@)(@@) % الخالعات نحل النواحل % % عن جيد تياه عن المراسل % % 40(@)(@@) % مستغنيات بعطايا الجابل % % وربما استعددن للمواصل % PageV01P3453 41(@)(@@) % غير أخي الكيد ولا المقاتل % % فزرنه في العدد الكوامل % % 42(@)(@@) % من الحلي الجمة الصلاصل % % والسلب الرائع لاالمباذل % % 43(@)(@@) % والمسك في أبشارهن الشامل % % والعنبر المنشور كالقساطل % % 44(@)(@@) % يهتفن هل من فارس منازل % % أولى فأولى لابن أم هابل % % 45(@)(@@) % نازل أقران بني الثواكل % % ومن عظيم الفتن الهوائل % % 46(@)(@@) % عقائل الدر على العقائل % % في وشيهن الفاخر المخايل % % 47(@)(@@) % والمسك صرفا كدم الأباجل % قاتلهن الله من قواتل % % 48(@)(@@) % صوارع بالكيد أو خواتل % % روع المحالي فتن المعاطل % % 49(@)(@@) % يلقيننا في الوشح الجوائل % % أطغى من الأبطال في الحمائل % % 50(@)(@@) % يهززن أوصال قنا عواسل % % قنا ظهور لا قنا قنابل % % PageV01P3454 51(@)(@@) % بين عواليهن والسوافل % % نشر قرون جعدة السلاسل % % 52(@)(@@) % مثل الدجى مسدولة السدائل % % إلى خدود ذات ماء جائل % % 53(@)(@@) % كأنها صفائح الصياقل % % صبغن لابالصبغ الحوائل % % 54(@)(@@) % إلى ثغور 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms788# عذبة المناهل % % كأقحوان الديم الهواطل % % 55(@)(@@) % ذات رضاب مثل أري العاسل % % إلى ثدي فرغ حوافل % % 56(@)(@@) % ترنو إلى أجيادها العطائل % % على صدور لسن بالقواحل % % 57(@)(@@) % تلمس منهن يد المباعل % % رمان لاقطف ولامكاتل % % 58(@)(@@) % من كل ريا حلوة الشمائل % ناعمة ذات محب ذابل % % 59(@)(@@) % حسناء مثل الأمل المقابل % % في العمر المقتبل المماطل % % 60(@)(@@) % معدومة الأمثال والعدائل % % إن قلت مثل البدر لم تماثل % % PageV01P3455 61(@)(@@) % أوقلت مثل الشمس لم تعادل % % مهتزة فوق كثيب هائل % % 62(@)(@@) % مرتجة تحت قضيب مائل % % عرج على أي لهن ماثل % % 63(@)(@@) % فاستسق غيثا بعد دمع هامل % % له وواقف خيمه وسائل % % 64(@)(@@) % حافظ على عهد لهن حائل % % عليه فاربع لا على الجنادل % % 65(@)(@@) % ولاعلى مبرك ذاك الجامل % % ماقدر إصرارك بالجمائل % % 66(@)(@@) % في وقفة من مخبر أو سائل % % لابل دع الهزل لكل هازل % % 67(@)(@@) % وله عن الباطل غير الحاصل % % زايل عهد الظاعن المزائل % % 68(@)(@@) % مارعية المقتول عهد القاتل % % ما صلة الواصل غير الواصل % % 69(@)(@@) % في موقف مستهدف للعاذل % % مفيل رأيك غير الفائل % % 70(@)(@@) % يستنكث الداء على عقابل % % ماذاك للعاقل بالمشاكل % % PageV01P3456 71(@)(@@) % والعقل قدما معقل للعاقل % % والصبر من خير مآل آئل % % 72(@)(@@) % فاعدل إلى الأحجى من المعاذل % % والتمس الفوز ولا تواكل % % 73(@)(@@) % واستنجح العزم ولاتماطل % % عساك أن تحظى بنفل النافل % % 74(@)(@@) % ماأقرب النهزة من معاجل % % وأبعد العثرة من مماهل % % 75(@)(@@) % وفي التأني رشد المحاول % % مالم تفته فرصة المزاول % % 76(@)(@@) % ليس نضيج اللحم للمناشل % % شتان لحما منضج وناشل % % 77(@)(@@) % وتوأم النقص غلو الفاتل % % إذا تعدى فيه حد الجادل % % 78(@)(@@) % فاقصد إذا فرطت من مباذل % % ولاتكثر فيه بالأباطل % % 79(@)(@@) % وازجر عن الجهل ولاتجاهل % % وادع إلى الخير ولاتقاتل % % 80(@)(@@) % ليس حميدا سائق كعاتل % % شمر لكي تسبل ذيل الرافل % % PageV01P3457 81(@)(@@) % فالفقر في أذيالك الذوائل % % PageV01P3458 البحر : - 1(@)(@@) % حبر أبي حفص لعاب الليل % كأنه ألوان دهم الخيل % 2(@)(@@) % يجري إلى الإخوان جري السيل % بغير وزن وبغير كيل % 3(@)(@@) % كأنه من نهر الرفيل % % يحدو به جود كميش الذيل % 4(@)(@@) % نيلا ومازال جزيل النيل % % قيلا من الأقيال وابن قيل % % 5(@)(@@) % ليس بتنبال ولازميل % % إني إليه لشديد الميل % % 6(@)(@@) % ساع لما يرضى كثير الحيل % % وإن دعا حاسده بالويل % % 7(@)(@@) % كما دعا الجمال من سهيل % % PageV01P3459 البحر : - 1(@)(@@) % عيني لعينك حين تنظر مقتل % لكن عينك سهم حتف مرسل 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms789# % 2(@)(@@) % ومن العجائب أن معنى واحدا % هو منك سهم وهو مني مقتل % PageV01P3460 البحر : - 1(@)(@@) % أبابكر لك المثل المعلى % % وخد عدوك الترب الذليل % 2(@)(@@) % رأيت المطل ميدانا طويلا % يروض طباعه فيه البخيل % 3(@)(@@) % يراود عن جداه نفس سوء % ترى أن الجدا رزء جليل % % 4(@)(@@) % فما هذا المطال فداك أهلي % % وباعك بالندى باع طويل % % 5(@)(@@) % أظنك حين تقدر لي نوالا % يقل لديك لي منه الجزيل % % 6(@)(@@) % ويعوزك الذي ترضى لمثلي % % وإن لم يعوز الرأي الجميل % % 7(@)(@@) % وعين الماجد المفضال عين % كثير نواله فيها قليل % % 8(@)(@@) % وفيما بين مطلك واختلالي % % يموت بدائه الرجل الهزيل % 9(@)(@@) % فلا تقدر بقدرك لي نوالا % ولاقدري فتحقر ماتنيل % % 10(@)(@@) % وأطلق ماتهم به عساه % كفافي أيها الرجل النبيل % % PageV01P3461 11(@)(@@) % وإلا فالسلام عليك مني % % نبت دار فأسرع بي رحيل % 12(@)(@@) % وإني قائل لك قول لاه % نبيل شأنه شأن نبيل % 13(@)(@@) % إذا ضاقت على أمل بلاد % فما سدت على عزم سبيل % 14(@)(@@) % وإن يك جانب لاظل فيه % % فلي في جانب ظل ظليل % 15(@)(@@) % وبئس الظل ظل ليس فيه % % لذي سبب يمر به مقيل % % 16(@)(@@) % وكل مطالب يزداد بعدا % فمنه تعوض وبه بديل % % 17(@)(@@) % وهذا الموت للأحياء طرا % قرار والحياة لهم مثيل % % 18(@)(@@) % سيرعى ظمأه قرن فقرن % ويورد حوضه جيل فجيل % % 19(@)(@@) % وصرف الدهر يسلك في مدار % يجيل خطوبه فيها مجيل % % 20(@)(@@) % فآونة يدال على أناس % وآونة يديلهم مديل % % PageV01P3462 21(@)(@@) % وليس على يد بقرار أمن % ولاليد بثروتها كفيل % % 22(@)(@@) % فما لي إثر منصرف حنين % ولا بي نحو منحرف مميل % % 23(@)(@@) % وقد يتيسر الميئوس منه % % كما يتعذر الأمر المحيل % % 24(@)(@@) % ومن يك من ثنائي مستقيلا % فإني من جداه مستقيل % % 25(@)(@@) % وأعجب ماأراني الدهر أني % % وفي عهدي وعهدك مستحيل % % 26(@)(@@) % ولو صمت لم يعجزك نفعي % % وأنى يعجز المرء الحويل % % 27(@)(@@) % سألتمس المنافع من مليك % إذا طالبته فهو الكفيل % % 28(@)(@@) % وتعلم أينا المغبون منا % % عيانا أو يقوم لك الدليل % % 29(@)(@@) % أحدك عند لائمتي حديد % وحدك عند منفعتي كليل % % 30(@)(@@) % ستحكم بيننا القلس النواجي % % ويبعد بين دارينا الذميل % % PageV01P3463 31(@)(@@) % لجأت إليكم فخذلتموني % % وضفتكم فما قري النزيل % 32(@)(@@) % ورمتك فاستطلت بلا نوال % فما لنزاهتي لاتستطيل % 33(@)(@@) % سلوت مراضعي وصبا شبابي % % فكيف يعز أن يسلى خليل % % 34(@)(@@) % سيجزي الله ماأوليتموني % % لكم صاع بصاعكم 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms790# مكيل % % 35(@)(@@) % وأحسب أن عرضك عن قليل % أبا بكر هو العرض الفتيل % % 36(@)(@@) % ولي عرض تكانفه لسان % كأن كليهما سيف صقيل % % 37(@)(@@) % فهذا غيره الدنس المخزي % % وهذا غيره الطبع الكليل % 38(@)(@@) % صحبت ذوي المكارم آل وهب % بلؤمك إذ أمالهم الدليل % 39(@)(@@) % فأيقن كلنا أن سوف تحمي % % جرامتها بشوكتها النخيل % % PageV01P3464 البحر : - 1(@)(@@) % إذا كان صبري للعاجل % ملاوة صبري للآجل % 2(@)(@@) % فما لي أترك مالا يزول % وأعمل للعرض الزائل % 3(@)(@@) % أأصبر هذا المدى كله % % لغير رغيب ولاطائل % 4(@)(@@) % ويعجزني صبر أضعافه % % لما دونه أمل الآمل % 5(@)(@@) % شهدت إذا أنني مائق % وأن لست بالرجل العاقل % 6(@)(@@) % يباع النفيس بما دونه % لإيثار مستسلف عاجل % 7(@)(@@) % فما عذر من باع أسنى الحظو % % ظ بالوكس من موكس ماطل % % 8(@)(@@) % أأترك آخرتي ضلة % وأخدم دنياي بالباطل % % 9(@)(@@) % وأسخط ربي وأرضي العبا % % د بغير ثواب ولانائل % 10(@)(@@) % شهدت إذا أنني جاهل % بحظي وزدت على الجاهل % % PageV01P3465 11(@)(@@) % أبا أحمد طال هذا المطا % % ل وحسبك بالدهر من غائل % % 12(@)(@@) % فأنجز عداتك أو أعطني % % أمانا من الحدث النازل % % 13(@)(@@) % تذكر فكم لي من مدحة % تركضت في ذيلها الذائل % % 14(@)(@@) % وكائن كسوتك من حلة % مشيت بها مشية الرافل % % 15(@)(@@) % وكم لك من بارق خلب % كذوب ومن عدة حائل % % 16(@)(@@) % يحصل في الزق نفخ اليرا % % ع وما لعدانك من حاصل % % 17(@)(@@) % ولو لم تكن عقما عقرا % لقد جاوزت مدة الحامل % 18(@)(@@) % منحتك مدحي فلم تجزه % ألا ضل سعي من عامل % 19(@)(@@) % كأني في كل ما قلته % زرعت حصا في صفا صامل % % 20(@)(@@) % رجعت إلى فضل من فضله % على الإنس والجن والخابل % % PageV01P3466 21(@)(@@) % دفعت لساني إلى صيقل % وأسلمت عرضي إلى غاسل % % 22(@)(@@) % وكم كنت نبهت من خامل % وكم كنت حليت من عاطل % % 23(@)(@@) % فلو كنت أعشق جدوى يدي % % ك لحان ذهولي مع الذاهل % 24(@)(@@) % إذا مدح المادح الناقصي % % ن ذكرهم فوزة الفاضل % 25(@)(@@) % فأهدى لهم مدحة حسرة % لتقصيرهم عن مدى الكامل % PageV01P3467 البحر : - 1(@)(@@) % غدونا إلى ميمون نطلب حاجة % فأوسعنا منعا وجيزا بلا مطل % 2(@)(@@) % وقد يعد المرء البخيل كراهة % ألاء رجاء أن يعان على البذل % % 3(@)(@@) % وقال اعذروني إن بخلي جبلة % وإن يدي مخلوقة خلقة القفل % % 4(@)(@@) % طبيعة بخل أكدتها خليقة % تخلقتها خوف احتياجي إلى مثلي % % 5(@)(@@) % فألقى إلينا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms791# عذرة لانردها % % وكان ملقى حجة اللؤم والبخل % % PageV01P3468 البحر : - 1(@)(@@) % لاتسم الحمد أبا أحمد % فليس ذاك العلق من باله % 2(@)(@@) % فتى إذا حاولت معروفه % حملته أثقل أثقاله % % 3(@)(@@) % يستطرف الطارف من ماله % ويألف التالد من ماله % 4(@)(@@) % فليس في ماليه من مطمع % إذا عراه بعض سؤاله % % 5(@)(@@) % أحوجه إلى مثله الل % ه يوما لكي يجزى بأفعاله % % 6(@)(@@) % وقلل الأحياء من مثله % وكثر الموتى بأمثاله % % PageV01P3469 البحر : - 1(@)(@@) % قد بلى الله يونس بن بغاء % ببلاء النبي يونس قبله % 2(@)(@@) % يبلع الحوت بعضه كل يوم % % ليته يبلع المسكين جمله % % PageV01P3470 البحر : - 1(@)(@@) % وما في الناس أجود من شجاع % وإن أعطى القليل من النوال % 2(@)(@@) % وذلك أنه يعطيك مما % تفيء عليه أطراف العوالي % % 3(@)(@@) % وحسبك جود من أعطاك مالا % جباه بالطراد وبالنزال % % 4(@)(@@) % شرى دمه ليحويه فلما % % حواه حوى به حمد الرجال % % PageV01P3471 البحر : - 1(@)(@@) % ومولى يجر الشر لي غير مؤتل % % ويجني فيمضي وهو عني بمعزل % 2(@)(@@) % إذا كان زندا كنت مسعار ناره % وكم قادح نارا لآخر مصطلي % % 3(@)(@@) % سماك خرءا بخل % لاشك شيخ مغفل % 4(@)(@@) % لأن في الخرء نفعا % % للنخل والنخل يؤكل % % 5(@)(@@) % وأنت مافيك نفع % ولا لنفع تؤمل % 6(@)(@@) % فلست خرءا بخل % لكن صديد بحنظل % % 7(@)(@@) % وإن هذين عندي % % في الخلق منك لأمثل % % 8(@)(@@) % وللمنافع إن عد % دت المنافع أخيل % % PageV01P3472 البحر : - 1(@)(@@) % جاركم لا يعاد من علله % وضيفكم لا يسد من خلله % 2(@)(@@) % فاستعملوا الظلم والجفاء به % % فليس تلك السبيل من سبله % % 3(@)(@@) % ماضر مجفوكم جفاؤكم % % بالأمس في عيشه ولاأمله % % 4(@)(@@) % لاإن جفوتم قضى العليل ولا % % إن عدتم تنسئون في أجله % % PageV01P3473 البحر : - 1(@)(@@) % قصيدة كرها مثقفها % % عليك إذ ثقفت على مهل % 2(@)(@@) % أعجله الوقت عن رياضتها % % فأقبلت ريضا على عجل % % 3(@)(@@) % ثم استراضت فجاء مركبها % % ممتهد الظهر مردف الكفل % 4(@)(@@) % لم أحتشم كرها عليك ولا % % سدد منها مواضع الخلل % % 5(@)(@@) % لأنني عالم بأنك لاتع % % تب فيما أصلحت من عملي % % 6(@)(@@) % وليس مثلي ينام عن خلل % في مدح ممدوحه ولازلل % 7(@)(@@) % لاسيما في مديح ممتدح % يحرم في مدح كل منتحل % % 8(@)(@@) % والشعر ماكان غير منتحل % يحرم في مدح كل منتحل % 9(@)(@@) % فليستعدها الأمير ثانية % على الذي في المعاد من ثقل % % 10(@)(@@) % وليحتمل عبده الأمير وإن % % ثقل تثقيل غير محتمل % % PageV01P3474 البحر 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms792# : - 1(@)(@@) % لاح شيب فنهنه الحلم جهلا % % ومشى جائر على القصد رسلا % % 2(@)(@@) % إن في الحلم للسفاه وفي عي % % سى بن شيخ لكل عات لنكلا % % 3(@)(@@) % دانت الأرض سيف عيسى بن شيخ % خ مادانت الحليلة بعلا % % 4(@)(@@) % قام لله والإمام بحق % قد أطالت به الصناديد مطلا % % 5(@)(@@) % فتح المغلقات من سبل الأر % % ض وسد الثغور خيلا ورجلا % % 6(@)(@@) % قالت الحرب إذ تخمط عيسى % % يابن شيخ لقد تخمطت فحلا % % 7(@)(@@) % صال المشرفي صولات صدق % لم تدع فيهم لذي الذحل ذحلا % % 8(@)(@@) % وأخاف المخيف ذا العيث حتى % % أمن الخائف المشتت شملا % % 9(@)(@@) % قلت للسائلي بعيسى بن شيخ % زادك الله بالمعالم جهلا % % 10(@)(@@) % أنت كالمستضيء شمسا بنار % ولعمري للشمس للعين أجلى % % PageV01P3475 11(@)(@@) % كل مجد تراه في الناس حيا % هو أحياه بعدما مات هزلا % % 12(@)(@@) % كان عيسى في نشره ميت الجو % % د كعيسى مكلم الناس طفلا % % 13(@)(@@) % جبل عاصم وواد خصيب % لاترى الدهر في جنابيه محلا % % 14(@)(@@) % ذو أفاع لمن يعاديه صم % كائنات لمن يواليه نحلا % % 15(@)(@@) % تقلس الأري والسمام وناهي % % ك بهذا وذا شفاء وخبلا % % 16(@)(@@) % أوسع الراغبين فضلا كما أو % % سع أهل العناد نفيا وقتلا % % 17(@)(@@) % واحد الجود لاتمج سؤالا % أذناه ولاتليقان عدلا % % 18(@)(@@) % أيها الوافد الميمم عيسى % % اغترف لي من ذلك البحر سجلا % % 19(@)(@@) % ولك الله إن عرضت عليه % % حاجتي أن تقول أهلا وسهلا % 20(@)(@@) % ذاك ظني بسيد الناس طرا % وابن من سادهم غلاما وكهلا % % PageV01P3476 21(@)(@@) % قل له عن مؤمل من بعيد % ديمة من ندى يديه ووبلا % % 22(@)(@@) % إن جورا عمومك الناس بالفض % % ل سوى واحد محق فعدلا % % 23(@)(@@) % لاتكن حسرة علي فقد أوسع % ت هذا الأنام غيري فضلا % % 24(@)(@@) % وشفيعي إليك حامل شعري % % وهو من لا تراه للرد أهلا % % 25(@)(@@) % مع أني إذا شفعت بأخلا % % قك كانت شفاعة الناس فضلا % % 26(@)(@@) % قد أردت الإطناب فيك فقالت % % لي غاياتك البعيدة مهلا % % 27(@)(@@) % ورأيت القليل يكفي من المد % % ح إذا المرء طاب فرعا وأصلا % % 28(@)(@@) % حسب ذي الهز باليسير من الهز % ز إذا النصل كان مثلك نصلا % % 29(@)(@@) % قد تثيب القليل مدحا من القو % % م كثيرا من المثوبة جزلا % % 30(@)(@@) % أبلها خلة برغم عدو % جعل الله خده لك نعلا % % PageV01P3477 31(@)(@@) % ورميت الذين ترمي فكانت 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms793# % % لك آجالهم قسيا ونبلا % % 32(@)(@@) % لست أخشى صروف دهري إذا ما % % عقد الله لي بحبلك حبلا % % PageV01P3478 البحر : - 1(@)(@@) % قل لأبي سهل الذي ترك ال % % وعر بمعروفه وقد سهلا % % 2(@)(@@) % رأيتني يا أخا السماح وإي % اك عجيبا حديثنا مثلا % % 3(@)(@@) % تولي فأثني فتتبع النهل ال % % أول من عارفاتك العللا % % 4(@)(@@) % فهكذا دأبنا تجود فأن % أثنيت أتبعت ناقة جملا % % 5(@)(@@) % مانفل جاءني فقمت به % % في الناس إلا أردفته نفلا % % 6(@)(@@) % الله عوني على صنيعك بي % % فما أرى لي بحمله قبلا % % 7(@)(@@) % كلفت تخفيف ماامتننت به % % شكريك فازداد كاهلي ثقلا % % 8(@)(@@) % ياآل نوبخت لاعدمتكم % ولاتبدلت منكم بدلا % % 9(@)(@@) % إن صح علم النجوم كان لكم % % حقا إذا ما سواكم انتحلا % % 10(@)(@@) % كم عالم فيكم وليس بأن قا % % س ولكن بأن رقى فعلا % % PageV01P3479 11(@)(@@) % أعلاكم في السماء مجدكم % فلستم تجهلون ماجهلا % % 12(@)(@@) % شافهتم البدر في السؤال عن ال % % أمر إلى أن بلغتم زحلا % % 13(@)(@@) % وكل مابين ذا وذاك فما % % تخشون أني سلكتم الزللا % % 14(@)(@@) % لم تدركوا قط بالحساب بل ال % % أحساب علما لكم ولاعملا % % 15(@)(@@) % ماجعل الله بين علمكم % % وبينكم غير مجدكم وصلا % % PageV01P3480 البحر : - 1(@)(@@) % أجدر مال أن يكون نائلا % هدية تكسب شكرا عاجلا % % 2(@)(@@) % فبادر الآن الثناء الكاملا % % تلاق خلف الفكر منه حافلا % % 3(@)(@@) % واقسم لنا الكامخ قسما عادلا % قسم يد الله لك الفضائلا % % 4(@)(@@) % ولاترى فعلك فعلا خاملا % % إن أنت أسعفت صديقا مائلا % % 5(@)(@@) % بحاجة نزر فيها سائلا % % بل فاضل وافق شكرا فاضلا % % 6(@)(@@) % لن يرهب العدل ولا العواذلا % % في أن ينيل التحف القلائلا % % 7(@)(@@) % من قد أنال النعم الجلائلا % % وكان بالعرف سحابا هاطلا % % 8(@)(@@) % يتبع بالفرائض النوافلا % % أصاب حقا أم أصاب باطلا % % 9(@)(@@) % حاشاي أن يصبح رأيي فائلا % % فأغتدي أخرى الأنام قائلا % % 10(@)(@@) % وتغتدي أمنع خلق فاعلا % % أقسمت لولا أن أصيب عاذلا % % PageV01P3481 11(@)(@@) % أعمى عن المزح غبيا غافلا % يلزمني الجهل ولست جاهلا % % 12(@)(@@) % في أن مهرت كامخا عقائلا % % حوالي الأجياد لاعواطلا % % 13(@)(@@) % لقد جعلت القطر منها وابلا % % والظلف رأسا والذنابي كاهلا % % 14(@)(@@) % حتى تراها شردا مواثلا % % طوالع الأنجم لا أوافلا % % 15(@)(@@) % تنشدها المحافل المحافلا % % تولي الصديق نحلها العواسلا % % 16(@)(@@) % وشانئيك رقشها القواتلا % % وتورث الحساد خبلا خابلا % % 17(@)(@@) % ما خالفت قوائم جحافلا % % PageV01P3482 البحر : - 1(@)(@@) % ولما رأيت القيل 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms794# ينبو شنيعه % % عن السمع لم أعدم لطاف المحايل % 2(@)(@@) % فصدرت أعجاز الهجاء مناسبا % تحط الوعول من رؤوس المعاقل % % 3(@)(@@) % ليخرقن أسداد المسامع قبله % % فينغل في أزرار تلك الغلائل % % PageV01P3483 البحر : - 1(@)(@@) % لعدوك الحد الأفل % ماعشت والخد الأذل % 2(@)(@@) % ولك اعتلاء الجد في % % خفض وعيش لا يمل % % 3(@)(@@) % ياحجة الله التي % % لخصيمها السعي الأضل % 4(@)(@@) % مازلت أعلم أن جي % % شا أنت فيه لا يفل % 5(@)(@@) % أنى ترادى صخرة % يردى بها الملك الأجل % 6(@)(@@) % نفسي فداؤك يوم أش % % به أورق القوم الأبل % % 7(@)(@@) % إذ كل رأي آفل % وهلال رأيك يستهل % 8(@)(@@) % أنت الذي نعش الموا % % لي رأيه حتى استقلوا % % 9(@)(@@) % من بعد ماكبت الجدو % % د بهم فأشفوا أو أضلوا % % 10(@)(@@) % لو لم تكن أنت الطبي % % ب لهم هناك ماأبلوا % % PageV01P3484 11(@)(@@) % شمرت نحو عدوهم % % وكأنك السمع الأزل % 12(@)(@@) % وتلوك في سنن الرشا % % د فشمروا ثم اشمعلوا % % 13(@)(@@) % ولرب شمير يجر % % ر بعقبه الذيل الرفل % 14(@)(@@) % فثنوا أعنتهم بعز % ز باذخ لا يستذل % 15(@)(@@) % بك أفلح السيف الحسا % % م وأنجح الرمح المتل % 16(@)(@@) % لولاك جارا عن مقا % % تل معشر جاروا وضلوا % % 17(@)(@@) % لكن أريتهما الهدى % % بمعالم لك لاتضل % 18(@)(@@) % وعقدت من عقد المكا % % يد للعدا مالا يحل % 19(@)(@@) % تلك التي من زاولت % فعروش دولته تثل % % 20(@)(@@) % صفرت يد الصفار بل % % شلت وحق لها تشل % PageV01P3485 21(@)(@@) % أرمت سوادا أنت في % % ه لقد أتت أمرا يجل % 22(@)(@@) % ماأطلقت في ذاك إل % % لا حين آن لها تغل % 23(@)(@@) % مل الذين اشتاقهم % % عند اللقاء ولم يملوا % % 24(@)(@@) % وسلاهم وبصدره % منهم غليل لا يبل % 25(@)(@@) % ولى يرى الأرض العري % % ضة ماله فيها محل % 26(@)(@@) % ويرى جوارح جسمه % % وأخفهن عليه كل % 27(@)(@@) % لايطمئن من الحذا % % ر به المبيت ولاالمظل % 28(@)(@@) % بيناه في جيش كرك % % ن متالع إذ قيل فل % 29(@)(@@) % كثر الثرى بجنوده % % لكن محقتهم فقلوا % % 30(@)(@@) % وضربتهم بسيوف كي % % د مغمدات لاتسل % PageV01P3486 31(@)(@@) % لو هز أدناها الأشل % ل فرى الحديد بها الأشل % 32(@)(@@) % قد طال ماغلب الكثي % % ر من العديد بها الأقل % 33(@)(@@) % لولا الذي أبلت لما أغ % % نى سيوف الهند سل % 34(@)(@@) % شرعت شرائع للظبا % % فيها لها نهل وعل % 35(@)(@@) % فانصاع جمع المارقي % % ن كأنهم نعم تشل % 36(@)(@@) % ولوا وحب قلوبهم % % بالطعن من دبر يحل % 37(@)(@@) % والأرض تسقى 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms795# من دما % % ئهم فتوبل أو تطل % % 38(@)(@@) % فبكل قاع منهم % بطل لجبهته يتل % 39(@)(@@) % يتلاومون وينشدو % % ن من الهوادة ماأضلوا % % 40(@)(@@) % لازلت نجما يهتدى % % بك في الظلام ويستدل % PageV01P3487 41(@)(@@) % مردى خطوب للملو % % ك برأيه عقد وحل % 42(@)(@@) % ينبوع حزم يستقى % % منه الصواب ويستمل % 43(@)(@@) % في ظل عيش لا يزا % % ل من النعيم عليه ظل % 44(@)(@@) % تضفو عليك فضوله % % فيعاش فيه ويستظل % PageV01P3488 البحر : - 1(@)(@@) % قومي بنو العباس حلمهم % حلمي هواك وجهلهم جهلي % % 2(@)(@@) % نبلي نبالهم إذا نزلت % بي شدة ونبالهم نبلي % % 3(@)(@@) % لاأبتغي أبدا بهم بدلا % لف الإله بشملهم شملي % % 4(@)(@@) % ومتى وردت حياضهم معهم % % لم يشربوا صفواتها قبلي % % 5(@)(@@) % قوم غدا بري وتكرمتي % % من شغلهم ومديحهم شغلي % % 6(@)(@@) % المنعمون علي أنعمهم % % والحامدون لكل ماأبلي % % 7(@)(@@) % أنا منهم بقضاء من ختمت % % رسل الإله به وهم أهلي % % 8(@)(@@) % مولاهم وغذي نعمتهم % % والروم حين تنصني أصلي % % 9(@)(@@) % حكماء هذا الناس روقتهم % % أتعيب اصلي ويك أم فصلي % % 10(@)(@@) % ومتى اعتصمت بهم فهم جبلي % % ومتى رعيتهم فهم سهلي % % PageV01P3489 11(@)(@@) % ومتى صفدت ففضلهم صفدي % % ومتى أجرت فحبلهم حبلي % % 12(@)(@@) % ومتى دعوتهم لنائبة % حدبوا علي ولم يروا خذلي % % 13(@)(@@) % يهبون دون دمي دماءهم % وأرى قليلا دونهم قتلي % % 14(@)(@@) % وإذا غدوت وجمعهم حشدي % % لم تستطع خيلي ولا رجلي % % 15(@)(@@) % يامن يميل إلى عدوهم % ماأنت من جدي ولاهزلي % % 16(@)(@@) % من لا يرى شمسي إذا طلعت % فقد استقاد عماه لي تبلي % % 17(@)(@@) % حسبي عماه من عقوبته % % وكفاه من عذل امرىء عذلي % % 18(@)(@@) % لايأملن معاشر جيف % جزري خباءثهم ولاأكلي % % 19(@)(@@) % أكرمت نصلي عن لحومهم % وخلقت يعرف مضربي نصلي % % PageV01P3490 البحر : - 1(@)(@@) % إن أنت لم ترع وأنت المفضال % لنا حقوقا أوجبتها أقوال % 2(@)(@@) % فيها أماديح صياب أمثال % فلترع فينا لاعدتك الآمال % 3(@)(@@) % حق الذي أعطاك وهو الفعال % % أنك مسئول وأنا سؤال % % 4(@)(@@) % تفاوتت منا ومنك الحال % % فأنت معمور ونحن أعطال % % 5(@)(@@) % وأنت موسوم ونحن أغفال % % سالمك المال وعادانا المال % % 6(@)(@@) % وشكر تفضيل الرجال الأفضال % % فافعل جميلا ساعدتك الأفعال % % PageV01P3491 البحر : - 1(@)(@@) % ياراغبا نزعت به الآمال % ياراهبا قذفت به الأوجال % 2(@)(@@) % ذهب النوال فما يحس نوال % وعفا الفعال فما يحس فعال % 3(@)(@@) % أودى الزمان بمن يعلم أهله % كيف النعيم فكيف ينعم بال % 4(@)(@@) % سلب الزمان جماله عن نفسه % فغدا وراح وما 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms796# عليه جمال % 5(@)(@@) % ذهب الذي هبت يداه وفيهما % % للراغبين مناله ومصال % 6(@)(@@) % ذهب الذي نالت يداه من العلا % % مالاينال من المديح مقال % 7(@)(@@) % ياسوءتا للأرض كيف تماسكت % وقد استزيل وحقها الزلزال % % 8(@)(@@) % وكفى من الزلزال بعد محمد % أن ليس يعرف بعده إفضال % 9(@)(@@) % ذهب الذي كان الصيام شعاره % % ولضيفه الإنزال والآكال % % 10(@)(@@) % فكأنه رمضان في إخباته % % وكأنه في جوده شوال % PageV01P3492 11(@)(@@) % ذهب الذي أوصاه آدم إذ مضى % % بعياله فهم عليه عيال % 12(@)(@@) % ذهب الذي ماكان يمطل وعده % % وله إذا جارى السماح مطال % 13(@)(@@) % أودى محمد بن نصر بعدما % % ضربت به في سروه الأمثال % % 14(@)(@@) % ملك تنافست العلا في عمره % وتنافست في يومه الآجال % 15(@)(@@) % من لم يعاين سير نعش محمد % لم يدر كيف تسير الأجبال % 16(@)(@@) % ياحفرة غلبت عليه جنة % كانت به وبنفسها تختال % 17(@)(@@) % الآن أيقن من يشك ويمتري % % أن البقاع من البقاع تدال % 18(@)(@@) % إما أصيب فللنجوم مغاور % تغتالهن وللجبال زوال % 19(@)(@@) % ولقد يعزينا عليه أنه % وافى كمال العمر منه كمال % 20(@)(@@) % أسد مضى وتخلفت أشباله % % وعلي أن تستأسد الأشبال % PageV01P3493 21(@)(@@) % ولما حظيت بعرفه ولقد جرت % بوفاته محن علي ثقال % % 22(@)(@@) % وخلوت مما ناله من ماله % % غيري وقد شقيت به الأموال % 23(@)(@@) % ولما عرضت له فخاب تعرضي % % لكن عففت وألحف السؤال % 24(@)(@@) % وذخرته للدهر أعلم أنه % % كالحصن فيه لمن يؤول مآل % 25(@)(@@) % وتمتعت نفسي بروح رجائه % % زمنا طويلا والتمتع مال % 26(@)(@@) % فرأيته كالشمس إن هي لم تنل % % فضياؤها والرفق فيه ينال % 27(@)(@@) % والحق يأمر أن يقال وحقه % % أن لا يخالف أمره القوال % 28(@)(@@) % لهفي لفقدك يامحمد إنه % % فقدت به النفحات والأنفال % % 29(@)(@@) % بالله أقسم أن عمرك ماانقضى % % حتى انقضى الإحسانوالإجمال % 30(@)(@@) % صلى الغدو عليك والآصال % وتغمدتك بظلها الأظلال % PageV01P3494 31(@)(@@) % وبكتك أوعية الدموع وتارة % غيث كعرفك مسبل هطال % % 32(@)(@@) % وعفا الثرى عن حر وجه لم يزل % حر اللقاء إذا عرا السؤال % 33(@)(@@) % وتماسكت أوصال كف لم تزل % بنوالها تتماسك الأوصال % % 34(@)(@@) % يازينة الدنيا وزينة أهلها % % وثمال من أعيا عليه ثمال % % 35(@)(@@) % حالت بدارك بعدك الأحوال % وتغولت بقطينها الأغوال % 36(@)(@@) % وبكاك من بستان قصرك زاهر % لثناك من نفحاته أشكال % 37(@)(@@) % وبكت حمائمه وعاد غناؤها % % نوحا يهاج بمثله البلبال % % 38(@)(@@) % أعزز علي بمنزلاتك أن غدت 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms797# % تبكي السروج لهن والأجلال % 39(@)(@@) % أعزز علي بصافناتك أن غدت % تبكي السروج لهن والأجلال % % 40(@)(@@) % أعزز علي بعارفاتك أن غدت % يبكي الرجاء لهن والتأمال % PageV01P3495 41(@)(@@) % أعزز علي بأصدقائك أن غدوا % % ولشخصك الغالي بهم إخلال % 42(@)(@@) % أصقال كل مروءة مجفوة % ماللمروءة مذ أفلت صقال % 43(@)(@@) % أصبحت بعد منافح ومجامر % لثرى يهال عليك أو ينهال % 44(@)(@@) % أما وحليتك المذالة للبلى % % فاذهب فكل مصونة ستذال % % PageV01P3496 البحر : - 1(@)(@@) % طرفت عيون الغانيات وربما % % أمالت إلي الطرف كل مميل % 2(@)(@@) % وماشبت إلا شيبة غير أنه % % قليل قذاة العين غير قليل % 3(@)(@@) % وإذا شبابك بت منك حباله % بتت له منك النساء حبالها % % 3(@)(@@) % كم خلة لي صارمتني بعده % % لو كان أوجدني بها أبدالها % % 3(@)(@@) % فالآن حق لي البكاء على الذي % % كان المضمن عطفها ووصالها % % 3(@)(@@) % قد كنت أبكي من صريمة خلة % كان الشباب معوضي أمثالها % % 3(@)(@@) % لاشيء إلا وفيه أحسنهالكاملقد كنت أبكي من صريمة خلة كان الشباب معوضي أمثالها فالآن حق لي البكاء على الذيكان المضمن عطفها ووصالها وعلى الذي لو كان أخلف خلةمن خلة أو ردها فامالها كم خلة لي صارمتني بعدهلو كان أوجدني بها أبدال % فالعين منه إليه تنتقل % 4(@)(@@) % فوائد العين منه طارفة % كأنما أخرياتها الأول % PageV01P3497 البحر : - 1(@)(@@) % لايهنىء الناس مايرعون من كلأ % ومايريحون من أهل ومن مال % 2(@)(@@) % بعد ابن زرعة الثاوي ببلقعة % أمسى ببلدة لاعم ولاخال % 3(@)(@@) % ياويح للأرض أضحى ظهرها عطلا % من ابن زرعة لكن بطنها حالي % % 4(@)(@@) % لئن جلا وأقمنا إنه لفتى % أمسى وكل مقيم بعده جالي % % 5(@)(@@) % أما لئن هيج بلبال القلوب به % % لكم كفاها قديما هيج بلبال % 6(@)(@@) % من لم تلد مثله أرض ولاثكلت % والأرض جد ولود جد مثكال % % 7(@)(@@) % نأى ولم ينأ نأيا ينطوي أبدا % لزائريه بنص أو بإرقال % 8(@)(@@) % وماأخ بقريب حين تحجبه % % نبائث الأرض في منهالة الجال % 9(@)(@@) % إذا الثرى قيد نصف الرمح غيبه % % فقد هوى في مهاو ذات أهوال % 10(@)(@@) % حسب الخليلين نأي الأرض بينهما % % هذا عليها وهذا نحتها بالي % % PageV01P3498 البحر : - 1(@)(@@) % ياحسن الوجه والشمائل وال % % أخلاق والرأي والأفاعيل % 2(@)(@@) % مابال غيري يحظى لديك ولا % % أحظى بشيء سوى التعاليل % 3(@)(@@) % ولو تخليت من علائق تأ % % ميلك قفيت بالأباطيل % 4(@)(@@) % لكنني فيك غير 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms798# ماعطل % من حسن ظن وبعد تأميل % % 5(@)(@@) % وماأحابيك في المديح ولا % % شيدت معاليك بالأقاويل % 6(@)(@@) % صلني برزقي وفائتي صلة % ألذ من نشطة السراويل % 7(@)(@@) % بلا دفاع ولا مماطلة % معجلا ذاك كل تعجيل % 8(@)(@@) % ولاتكن مثل معشر جعلوا % % أعراضهم فدية المناذيل % % 9(@)(@@) % بحق ذاك الذي يقوم مقا % % م التاج للملك والأكاليل % % 10(@)(@@) % لابل مقام السلاح ذلقه الص % صيقل للفتية البهاليل % % PageV01P3499 11(@)(@@) % لا بل مقام الدفاع والطفر ال % % حاضر في ساعة البلابيل % % 12(@)(@@) % يمنا ورأيا مجنبا أبدا % كل ضلال وكل تضليل % 13(@)(@@) % سيدنا بدرنا مؤملنا % % واحدنا في الفعال والقيل % 14(@)(@@) % أبي الحسين الذي به رجعت % محاسن الملك بعد تبديل % 15(@)(@@) % ملأه الله ماحباه به % % لابزوال ولابتحويل % 16(@)(@@) % ممتعا بالصفاء منك وبال % % إخلاص يجزيك غير تأجيل % % 17(@)(@@) % موفقا فيك للصنائع يسدي % % ن مافاض ساحل النيل % % 18(@)(@@) % ألبسك الله يا أبا عمر % % ثوب بهاء وتاج تبجيل % 19(@)(@@) % يامن إذا مااجتباه منتقد % دل على حكمة وتحصيل % % 20(@)(@@) % خذ صلة من أخيك كافية % يلقاك مابعدها بتفصيل % PageV01P3500 21(@)(@@) % راجحة الوزن وهي شائلة % عن قدرك الراجح المثاقيل % % 22(@)(@@) % من قول حر مخول لك بال % % إحسان توليه كل تخويل % % 23(@)(@@) % قال ببعض الذي منحت ولم % % يمدحك بالزور والتهاويل % % 24(@)(@@) % ولاتزل من لبوس عافية متقارببنات ثوابة ما في الأنام أخلق منكم ولا أثقلجمعتم لشقوتكم أبنةإلي ثقل ماله محلثقلتم فلو كنتم تنكحون باتت نساؤكم تطحل ولكن خلقكم بلطف اللطيفلأن تحملوا لا لأن تحملوا وكان البغاء دواء الثقيل كيم % % وستر نعماء في سرابيل % % 24(@)(@@) % أطاقت براذينكم حملكم % % لأن البهائم لا تعقل % 24(@)(@@) % الم تروا الأرض إذ ثقلت % كتثقيلكم خلقت تجمل % 24(@)(@@) % وكان البغاء دواء الثقي % % ل كيما يكون هو الأسفل % 24(@)(@@) % ولكن خلقكم بلطف اللطيف % لأن تحملوا لا لأن تحملوا % % 24(@)(@@) % ثقلتم فلو كنتم تنكحو % % ن باتت نساؤكم تطحل % 24(@)(@@) % بنات ثوابة ما في الأنا % % م أخلق منكم ولا أثقل % PageV01P3501 24(@)(@@) % ولل في خلقه حكمة % بها خول الناس ما خولوا % % 24(@)(@@) % جمعتم لشقوتكم أبنة % إلي ثقل ماله محل % PageV01P3502 البحر : - 1(@)(@@) % مااستشرفت منك العيون ضئيلا % % لكن عظيما في الصدور جليلا % % 2(@)(@@) % أقبلت في خلع الولاية طالعا % والناس حولك يوفضون قبيلا % % 3(@)(@@) % فكأنك البدر المنير مكللا % من طالعات سعوده إكليلا % % 4(@)(@@) % كم من غليل يوم ذلك 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms799# هجته % لازلت في صدر الحسود غليلا % % 5(@)(@@) % من كان حمله لبوس ولا ية % وأعازه التعظيم والتبجيلا % % 6(@)(@@) % فبذات نفسك مايكون جمالها % % وبمائه كان الحسام صقيلا % % 7(@)(@@) % تبا لمن تعمي بصيرة رأيه % حتى يراك بما سواك نبيلا % % 8(@)(@@) % إني لأكبر أن أراك مهنأ % إلا بما يتجاوز التأميلا % % 9(@)(@@) % لأحق منك بأن يهنأ معشر % رزقوك حظا في الحظوظ جزيلا % % 10(@)(@@) % أنصفتهم وأقمت عدلك فيهم % ميزان قسط لا يميل مميلا % % PageV01P3503 11(@)(@@) % فهدت عيونهم وأفرخ روعهم % % وأقام منهم من أراد رحيلا % % 12(@)(@@) % من بعد ماسأل الحميم حميمه % مابال دفك بالفراش مذيلا % % 13(@)(@@) % لايعدموك فقد نصحت إمامهم % % ووضعت إصرهم وكان ثقيلا % % 14(@)(@@) % أرفقتهم في خرجهم ووفرتهم % % وكذا المدر يقدم التحفيلا % % 15(@)(@@) % فتنافسوا بك في العمارة بعدما % % طال العداء فعطلت تعطيلا % % 16(@)(@@) % فقضاك ريع العدل ماأعطيتهم % % أوفى قضاء واصطنعت جميلا % % 17(@)(@@) % والعدل مغزرة لكل حلوبة % والجور يعقب رسلها تشويلا % % 18(@)(@@) % لم لاتكون لدى إمامك مرتضى % لاينبغي بك في الكفاة بديلا % % 19(@)(@@) % وإذا وليت فليس يعدم قائلا % ماكان رأي إمامنا ليفيلا % % 20(@)(@@) % تجبي له مال البلاد وحمدها % % إذ لاتضيع من الحقوق فتيلا % % PageV01P3504 21(@)(@@) % قال الإمام وقد جمعتهما له % % حظان مثلهما بمثلك نيلا % % 22(@)(@@) % أنت الذي يمري اللقاح برفقه % ملء الوطاب ولا يجيع فصيلا % % 23(@)(@@) % أسمعته شكر الرعية بعدما % % جار الولاة فأسمعوه عويلا % % 24(@)(@@) % كسبت له التجوير قبلك عصبة % فكسبت بعدهم له التعديلا % % 25(@)(@@) % ولقد قطعت إليه كل حبالة % % لايستطيع لها الدهاة حويلا % % 26(@)(@@) % ولقد ركبت إليه كل مخوفة % لو زل راكبها لطاح قتيلا % % 27(@)(@@) % ووهبت نفسك للمتالف دونهم مااستشرفت منك العيون ضئيلا % % لكن عظيما في الصدور جليلا % % 28(@)(@@) % أقبلت في خلع الولاية طالعا % والناس حولك يوفضون قبيلا % % 29(@)(@@) % فكأنك البدر المنير مكللا % من طالعات سعوده إكليلا % % 30(@)(@@) % كم من غليل يوم ذلك هجته % لازلت في صدر الحسود غليلا % % PageV01P3505 31(@)(@@) % من كان حمله لبوس ولا ية % وأعازه التعظيم والتبجيلا % % 32(@)(@@) % فبذات نفسك مايكون جمالها % % وبمائه كان الحسام صقيلا % % 33(@)(@@) % تبا لمن تعمي بصيرة رأيه % حتى يراك بما سواك نبيلا % % 34(@)(@@) % إني لأكبر أن أراك مهنأ % إلا بما يتجاوز التأميلا % % 35(@)(@@) % لأحق منك بأن يهنأ معشر % رزقوك حظا في الحظوظ جزيلا % % 36(@)(@@) % أنصفتهم وأقمت عدلك فيهم % ميزان قسط لا يميل مميلا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms800# % % 37(@)(@@) % فهدت عيونهم وأفرخ روعهم % % وأقام منهم من أراد رحيلا % % 38(@)(@@) % من بعد ماسأل الحميم حميمه % مابال دفك بالفراش مذيلا % % 39(@)(@@) % لايعدموك فقد نصحت إمامهم % % ووضعت إصرهم وكان ثقيلا % % 40(@)(@@) % أرفقتهم في خرجهم ووفرتهم % % وكذا المدر يقدم التحفيلا % % PageV01P3506 41(@)(@@) % فتنافسوا بك في العمارة بعدما % % طال العداء فعطلت تعطيلا % % 42(@)(@@) % فقضاك ريع العدل ماأعطيتهم % % أوفى قضاء واصطنعت جميلا % % 43(@)(@@) % والعدل مغزرة لكل حلوبة % والجور يعقب رسلها تشويلا % % 44(@)(@@) % لم لاتكون لدى إمامك مرتضى % لاينبغي بك في الكفاة بديلا % % 45(@)(@@) % وإذا وليت فليس يعدم قائلا % ماكان رأي إمامنا ليفيلا % % 46(@)(@@) % تجبي له مال البلاد وحمدها % % إذ لاتضيع من الحقوق فتيلا % % 47(@)(@@) % قال الإمام وقد جمعتهما له % % حظان مثلهما بمثلك نيلا % % 48(@)(@@) % أنت الذي يمري اللقاح برفقه % ملء الوطاب ولا يجيع فصيلا % % 49(@)(@@) % أسمعته شكر الرعية بعدما % % جار الولاة فأسمعوه عويلا % % 50(@)(@@) % كسبت له التجوير قبلك عصبة % فكسبت بعدهم له التعديلا % % PageV01P3507 51(@)(@@) % ولقد قطعت إليه كل حبالة % % لايستطيع لها الدهاة حويلا % % 52(@)(@@) % ولقد ركبت إليه كل مخوفة % لو زل راكبها لطاح قتيلا % % 53(@)(@@) % ووهبت نفسك للمتالف دونهه % % ورأيت ذلك في الإمام قليلا % % 54(@)(@@) % شهد الخليفة والرعية أنه % % ماكان جولكم عند ذلك مهيلا % % 55(@)(@@) % شهد الخليفة والرعية أنه % % ماكان رأيك عند ذاك سحيلا % % 56(@)(@@) % أنت الذي قطع الحبائل بعدما % % أزمت أزام وعضلت تعضيلا % % 57(@)(@@) % فنجوت من أيدي الأخابث سالما % ورهنتهم لهفا عليك طويلا % % 58(@)(@@) % ولئن نجوت لقد ركبت عزيمة % حذاء تسبق داعرا وجديلا % % 59(@)(@@) % وأجلت رأيا أحوذيا مثله % فيما ينوب من الخطوب أجيلا % % 60(@)(@@) % ولقل ماينجو امرؤ من مثلها % % بالرأي إلا أن يكون أصيلا % % PageV01P3508 61(@)(@@) % دبرت تدبير المدبر إنه % % ماكان عند مضلة ضليلا % % 62(@)(@@) % بل كنت للملك السعيد وديعة % أمر الإله بحفظها جبريلا % % 63(@)(@@) % بل ذا وذاك وإن وهبت لأمة % تعفو فضولكوأصيلا % % 64(@)(@@) % ولقد بلاك الطالبون فثبطوا % % أن يدركوك وخذلوا تخذيلا % % 65(@)(@@) % ورأوا مكانك ريثما أخليته % كمكان بعض الراسيات أزيلا % % 66(@)(@@) % فسروا على حرد إليك وأعملوا % % طلبا يحث به الرعيل رعيلا % % 67(@)(@@) % فسترت دونهم بستر كثافة % حتى خفيت وما خفيت ضئيلا % % 68(@)(@@) % فثنوا أعنة راجعين بخيبة % كرجوعهم أيام ساقوا الفيلا % % 69(@)(@@) % ولعلهم لو أدركوك لأرسلت % طير العذاب عليهم السجيلا % % 70(@)(@@) % ولما خفيت بأن وجهك لم يكن % % في كل 