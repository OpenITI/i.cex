urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms201# % % أهرت كالمغرق في ابتسامه % % 9(@)(@@) % ضمره في مبتدى أعوامه % % و صانه عن عابه وذامه % % 10(@)(@@) % فجاء كالمفرق من سقامه % % يطرف عنك الجمر في ضرامه % % PageV01P834 11(@)(@@) % ألحاظه تخبر عن عرامه % % يشب ما حرك من زمامه % % 12(@)(@@) % كأنما روع في أحلامه % % حتى إذا ما افتر عن حسامه % % 13(@)(@@) % و احتدم المقدار في احتدامه % % و استنزل السرب على أحكامه % % 14(@)(@@) % أحرز ما رمناه من آرامه % % فما رزقناهفمن إنعامه % % 15(@)(@@) % و ما حرمناه ففي ذمامه % % حتى يذوق المر من حمامه % % PageV01P835 البحر : - 1(@)(@@) % ما تم وشك البين حتى تيما % % و أعاد عرفان السلو توهما % % 2(@)(@@) % فعلام يعصي الشوق مشتاق غدا % % طوع الصبابةأو يطيع اللوما % % 3(@)(@@) % يا دار لو تركوا الفؤاد مسلما % من حبهم ما عجت فيك مسلما % % 4(@)(@@) % بل لو أطاع اللوم فيك متيم % ما كان فيك على الهوى متلوما % % 5(@)(@@) % لم يبك من حذر الوشاةو طالما % % وشى بأدمعه رباك ونمنما % % 6(@)(@@) % أيام ينأى القلب من حرق الهوى % % فإذا دنت منه خيامك خيما % % 7(@)(@@) % ما شيعته بدمعها مقل الدمى % % إلا وقد أبكين مقلته دما % % 8(@)(@@) % قضب تميل قتستميل متيما % و نواظر تسجوفتشجو مغرما % % 9(@)(@@) % و مها تريك الليل صبحا مشرقا % بجمالهاو الصبح ليلا مظلما % % 10(@)(@@) % لما بدا وجديو كان مكتما % أبدين وجدا كان في مكتما % % PageV01P836 11(@)(@@) % و نشرن مطوي المحاسن للنوى % % فأريننا عرسا بذاك ومأتما % % 12(@)(@@) % شرفا بني فهد بن أحمدإنكم % % أوفى الملوك سماحة وتكرما % % 13(@)(@@) % حكمتم المعروف في أموالكم % و الخوف في أعدائكمفتحكما % % 14(@)(@@) % و علمتم أن المكارم رتبة % من نالها كان الكريم المعلما % % 15(@)(@@) % فحذت بها صيد الملوكو فاخرت % بأبي الفوارسفانتمت حيث انتمى % % 16(@)(@@) % بمشهر في الجود يظلم ماله % % بنوالهفلو استطاع تظلما % % 17(@)(@@) % و مقدم جارى الملوك إلى العلى % % فتأخروا عن شأوه وتقدما % % 18(@)(@@) % بأس كصرف الدهر أشرف فاغتدى % % و ندى كصوب المزن صوب فانهمى % % 19(@)(@@) % و إذا ارتدى بالسيف خف مضاؤه ؛ % و إذا ارتدى بالحلم كان يرمرما % % 20(@)(@@) % و إذا وعى مدحا تبسم ضاحكا % و اهتز كالرمح انثنى وتقوما % % PageV01P837 21(@)(@@) % أعدى الزمان صنيعةفأعاده % % جذلان بعد عبوسه متبسما % % 22(@)(@@) % و غدا أحق بلبس أثواب العلى % % و المجد قد ترك المهند محرما % % 23(@)(@@) % فليهنه البرء الذي أبرى الندى % % من دائه وأراه سعدا منجما % % 24(@)(@@) % و 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms202# قصائد يهدى إليك بقصدها % % فرحا يكون إلى السلامة سلما % % 25(@)(@@) % يا أيها الملك الذي حاز العلى % % لما تقسمها الملوك تقسما % % 26(@)(@@) % ألحقت بي في الشعر خدني لكنة % بكرا وراحا في البلادة توأما % % 27(@)(@@) % و أنا الذي دبجت لما سبجا % % و عرفت بالإفصاح لما استعجما % % 28(@)(@@) % أثريت في الشرف القديمو أعدما % % و نطقت بالمدح الرصينو أفحما % % 29(@)(@@) % هذاو من أخرت كان مؤخرا % مناومن قدمت كان مقدما % % 30(@)(@@) % ما الناس إلا شاكرا لك نعمة % جادت يداك بهافجاد وأنعما % % PageV01P838 31(@)(@@) % أو مادحا وجد المديح مسيرا % ورأى الكلام مصدقا فتكلما % % PageV01P839 البحر : - 1(@)(@@) % غالت بني مطر الأيام واكتأبت % % كأنما استعبرت من بعدهم ندما % % 2(@)(@@) % أما وقد غدرت بيض السيوف بهم % % فليس ترعى لخلق بعدهم ذمما % % 3(@)(@@) % فنازح حكم الأعداء في دمه % % و كان في مهج الأعداء محتكما % % 4(@)(@@) % و باسط الباع يسقي الغيث رمته % % قبل الأنام إذا ما فاض فانسجما % % 5(@)(@@) % مغضي الجفون على هيفاء سامية % قد وشحته ظباة المشرفي دما % % 6(@)(@@) % كأنما بشروه بالرجوع إلى % % ما كان منه فغض الطرف وابتسما % % PageV01P840 البحر : - 1(@)(@@) % إشرب فقد شرد ضو % % ء الصبح عنا الظلما % % 2(@)(@@) % وانبسط النور على % % وجه الثرى فابتسما % % 3(@)(@@) % كأنما أطلع ما % % ء المزن فيه أنجما % % 4(@)(@@) % و صوب الإبريق في ال % % كاس مداما عندما % % 5(@)(@@) % كأنها إذ مجها % % مقهقهتبكي دما % % PageV01P841 البحر : - 1(@)(@@) % بنفسي من أجود له بنفسي % % و يبخل بالتحية والسلام % 2(@)(@@) % و يلقاني بعزة مستطيل % و ألقاه بذلة مستهام % 3(@)(@@) % و حتفي كامن في مقلتيه % % كمون الموت في حد الحسام % % PageV01P842 البحر : - 1(@)(@@) % أبا الصاب سقاك الل % ه صوب المزن سحاما % % 2(@)(@@) % دعاك القرنو البيض % تعد البيض والهاما % % 3(@)(@@) % فأقدمت وليس العا % % ر أن تقتل إقداما % % 4(@)(@@) % لقد فل شبا الصمصا % % م من بأسك صمصاما % % 5(@)(@@) % و قد عانق منك الجزع % % رحب الباع بساما % % 6(@)(@@) % فما تعلو عليك الطي % % ر إجلالا وإعظاما % % PageV01P843 البحر : - 1(@)(@@) % أفي دمى أبكت العيون دما % % أعدت لوما يعيد لي لمما % % 2(@)(@@) % حكمن باللحظ في القلوبو قد % % حكم فيها الفراقفاحتكما % % 3(@)(@@) % غداة ضنت بها السجوففلم % % نرو عناقا منها وملتثما % % 4(@)(@@) % فمن شموس قد توجت ظلما % و من غصون قد أثمرت عنما % % 5(@)(@@) % ما يممت عيسها العقيق ضحى % حتى لقينا بها الردى أمما 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms203# % % 6(@)(@@) % و رب رام أصاب قلبي بال % لحظ غداة الفراق حين رمى % % 7(@)(@@) % و طالما دام وصلهفغدا % % يمطرني من مدامه ديما % % 8(@)(@@) % إذا دجى الليل كان لي قمرا % و إن بدا الصبح كان لي صنما % % 9(@)(@@) % قد قلتو الليل خافض علما % للركبو الصبح رافع علما % % 10(@)(@@) % عما قليل يعود موردنا % % عذبا و تغدو همومنا همما % % PageV01P844 11(@)(@@) % لا نعدمن غرة الأمير فقد % % أعدمن جود كفه العدما % % 12(@)(@@) % سيف الإمام الذي نصول على الد % دهرإذا الدهر صال أو عرما % % 13(@)(@@) % و ناصر الدولة التي شملت % بالعدلعرب الأنام والعجما % % 14(@)(@@) % تكامل العلم فيهو اكتهلت % آراؤه قبل أن يبلغ الحلما % % 15(@)(@@) % يستنجد السيف في الخطوبإذا % % راح سواه يستنجد القلما % % 16(@)(@@) % صبح من العدل ما انتحى بلدا % إلا جلا الظلم عنه والظلما % % 17(@)(@@) % كم من مخوف سما له حسن % بالسيفحتى أعاده حرما % % 18(@)(@@) % في جحفل غصت الفجاج به % و أن من وطئه الثرى ألما % % 19(@)(@@) % إذا غدا خافق البنود غدت % جند المنايا لجنده خدما % % 20(@)(@@) % كأن في البر من سوابغه % بحر حديد يموج ملتطما % % PageV01P845 21(@)(@@) % كأن للرعد تحته صبحا % يعلوو للبرق فوقه ضرما % % 22(@)(@@) % فسرنا بشرق غارة ملأت % بالخيل غور البلاد والأكما % % 23(@)(@@) % و سد أفق السماء قسطله % فحيل دون السماء منه سما % % 24(@)(@@) % طلعت فيه على العراقفكم % % وفرت وفرا و كم حقنت دما % % 25(@)(@@) % قد قلتإذ أشرق الهدى فعلا % و انهد ركن الضلالفانهدما % % 26(@)(@@) % لا يغرس الشر غارس أبدا % إلا اجتنى من غصونه ندما % % 27(@)(@@) % إليك حثت ركابها عصب % تخوض بحر الظلام حين طمى % % 28(@)(@@) % لما خطوا عافي الرسوم من ال % % بيد أناخوا الركائب الرسما % % 29(@)(@@) % رأوا رياض الندى مدبجة % فدبجوا في فنائها الكلما % % PageV01P846 البحر : - 1(@)(@@) % إن عاده بعد السلو غرامه % % فله من الدمع المصون سجامه % % 2(@)(@@) % لا غرو إن غري العذول بلومه % % طالت صبابتهفطال ملامه % % 3(@)(@@) % ما هاج عهد الشوق إلا معهد % رامت بقلبي في الهوى آرامه % % 4(@)(@@) % و أنا الفداء لمن أصاب مقاتلي % % باللحظ من خلل السجوف سهامه % % 5(@)(@@) % أبدى لنا البدر المبين جماله % % و شمائل الغصن الرطيب قوامه % % 6(@)(@@) % أسيان يكسر للسلام جفونه % % و لو استطاع شفى الغليل سلامه % % 7(@)(@@) % إني وإن عرم الزمان لعائذ % بالصبر ما استولى علي عرامه % % 8(@)(@@) % مستصحبا عزما 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms204# مضيئا في الدجى % % تجري بفاجعة النوى أحكامه % % 9(@)(@@) % أجني به ثمر القريضفأصطفي % % منه الذي يعيي سواي مرامه % % 10(@)(@@) % فزمام أبكار القصائد في يدي % % و المجد في كف الأمير زمامه % % PageV01P847 11(@)(@@) % بدر العلاء إذا بدافعليه من % بدر السماء ضياؤه وتمامه % % 12(@)(@@) % و إذا تبسم واستهلفعارض % لاحت بوارقه وفاض غمامه % % 13(@)(@@) % نفسي فداء علي الباني العلى % % فلقد علت بعلوه أيامه % % 14(@)(@@) % ملك يليق به الثناءفيغتدي % % كالروض يشرق نثره ونظامه % % 15(@)(@@) % رد السماحو قد تقادم عهده % مخضرة عرصاته وإكامه % % 16(@)(@@) % و بنت يداه لتغلب شرفا علت % فوق النجوم قبابه وخيامه % % 17(@)(@@) % أي الفضائل يرتجى إدراكها % % من مغرم بالمجد طال غرامه % % 18(@)(@@) % أنواله يوم الندى أم بشره % % و سطاه يوم الروع أم إقدامه % % 19(@)(@@) % وسم الزمان بوقعة عدوية % سيان فيها عزمه وحسامه % % 20(@)(@@) % أوضحت نهج المكرمات فنهجها % % باد سناهمنيفة أعلامه % % PageV01P848 21(@)(@@) % و وصلت للإسلام بأسك مقدما % بضياء عزمكفاستنار ظلامه % % 22(@)(@@) % في موقف صبغت سيوفك أرضه % % بدم العداةفما يثور قتامه % % 23(@)(@@) % لو لم يعذ فيه الدمستق هاربا % عند الكريهة ما عداه حمامه % % 24(@)(@@) % ود البرية أن عمرك دائم % و كذا الربيع يحب منه دوامه % % 25(@)(@@) % لو أن جود يديك غيث وابل % عم البلاد رذاذه ورهامه % % 26(@)(@@) % فالحمد مضروب عليك رواقه ؛ % و المجد مقضي لديك ذمامه % % 27(@)(@@) % و إذا أناط بك الرجاء مؤمل % صدقت مناهو حققت أحلامه % % 28(@)(@@) % إن الأمير أعاد لي نهج الغنى % % و أعاد في عودي الندى إنعامه % % 29(@)(@@) % و بنيله ألبست ثوب صيانة % عمن يذم نواله معتامه % % 30(@)(@@) % فكسوته ديباج مدح مشرق % حسنت معانيهو قل كلامه % % PageV01P849 البحر : - 1(@)(@@) % أأزجر همة لقيت هماما % و أظلم عزمة جلت الظلاما % % 2(@)(@@) % صددت عن العراق صدود قال % و شمت الغيثإذ حل الشآما % % 3(@)(@@) % فألقيت الأمير أليف مجد % معنى بالمكارم مستهاما % % 4(@)(@@) % تقلدت الحسام العضب منه % % و لم أتقلد السيف الكهاما % % 5(@)(@@) % يلام على اعتقال المال قوم % و يسرف في الندى حتى يلاما % % 6(@)(@@) % حسام العزم ليس ينوب خطب % فنحمد عنده إلا الحساما % % 7(@)(@@) % فليس عدوه منه بناج % و لو وافى على النجم اعتصاما % % 8(@)(@@) % سلمتفكم سقيت رياض مدحي % % رذاذا من نوالكأو رهاما % % 9(@)(@@) % و كم لك من أياد سائرات % إلى أوطاننا عاما فعاما % % 10(@)(@@) % سحائب من بلاد الشام أضحت 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms205# % بأرض الحصن تنسجم انسجاما % % PageV01P850 11(@)(@@) % مؤرقة العيون تبيت تسري % % فتطرق فتية كانوا نياما % % 12(@)(@@) % تحارب عنهم الأعداء حربا % و كيف يسالم الصبح الظلاما % % 13(@)(@@) % أقمتو كيف يرحل عنك داج % رآك البحر والملك الهماما % % 14(@)(@@) % و لولا أنت لم أزج المطايا % % و لم أصل السرى شهرا تماما % % 15(@)(@@) % و أقرب ما أكون من الأماني % % إذا استمطرت من يدك الغماما % % 16(@)(@@) % و أرضى ما أكون من الليالي % % إذا ما عاد بشرك لي قذاما % % 17(@)(@@) % و إن ألبسك أفواف القوافي % % فقد ألبستني النعم الجساما % % PageV01P851 البحر : - 1(@)(@@) % أسمعتما أن الجبال تضام % و علمتما من غالت الأيام % 2(@)(@@) % فجع تطير له على أحشائنا % % شعل و تسقط في القلوب سهام % 3(@)(@@) % و رزية أخذ الردى ما يبتغي % % مناو نال بها الذي يستام % 4(@)(@@) % شهدت بتحليل الدموع وخبرت % أن العزاء على اللبيب حرام % 5(@)(@@) % كنا نعد الحصن دار إقامة % فاليوم وقفتنا به إلمام % 6(@)(@@) % يبكي الغمام المستسير بأرضها % % و نقول جاد بذي الغميم غمام % 7(@)(@@) % إن يفترق أحبابنا أيدي سبا % % عنهافقد يتفرق الأقوام % 8(@)(@@) % عطن أخل به الوفودو أوحشت % منه الرحاب الفيح والآطام % 9(@)(@@) % أقوى و فيه من العديد تدافع % و خلاو فيه من الأنيس زحام % 10(@)(@@) % و الترب ظمآن الجوانح ما سرى % % ركب السحاب عليهو هي جهام % PageV01P852 11(@)(@@) % أين الفتى الأزدي بل أين الندى الر % ربعيأين البؤس والإنعام % 12(@)(@@) % أين الألى شرب الحمام نفوسهم % % و هم حياة غضة وحمام % 13(@)(@@) % أين السمي من المكارم هذه % تنهل داجنةو تلك تغام % 14(@)(@@) % و السمر تنظم في عواملها العدا % % و البيض تنثر عن ظباها الهام % 15(@)(@@) % نزلوا على حكم الزمان وأمره % % و هم الخصوم اللد والحكام % 16(@)(@@) % يمضي بمر الفجع عام فيهم % و يجيء بالرزء المبرح عام % 17(@)(@@) % نعم كأن الدهر أقسم جاهدا % ألا تدومفبرت الأقسام % 18(@)(@@) % كانت موارد للعفاةفأصبحت % محمية الجنبات ليس ترام % 19(@)(@@) % و لقد شجاني أن يقوض مجلس % فيه الحجا والعلم والأحلام % 20(@)(@@) % طويت حدائقهو هن نواضر % و خبت بوارقهو هن ضرام % PageV01P853 21(@)(@@) % أدب غدت أيدي الحمام تضيمه % % ما كان إلا بالحمام يضام % 22(@)(@@) % و شهاب رجم غيبته صفائح % طويت على إشراقهو رجام % 23(@)(@@) % لله أي مودع حفت به % عصب على جمر الوداع قيام % 24(@)(@@) % صاروا به 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms206# مرضى القلوبكأنما % % قدس على أيديهمو شمام % 25(@)(@@) % عبق البرود يزين مشهده التقى % % و تحيد عن خلواته الآثام % 26(@)(@@) % أضحى ضجيع مسندينكأنما % % صرعتهم نخب الكؤوس فناموا % % 27(@)(@@) % كرماء لا يرجوهم في قربهم % % راج و لا يعتامهم معتام % 28(@)(@@) % حجبوا عن الأحبابإلا زورة % تجري بزور لقائها الأحلام % 29(@)(@@) % نطأ الصفيح عليهمو وراءه % % مثل الصفائح منجبون كرام % 30(@)(@@) % رقدوا عن الصلوات فيهو طالما % % قاموا إلى الصلوات وهي تقام % PageV01P854 31(@)(@@) % أمحمد بن علي احتفل الحيا % % و دموعنافهما عليك سجام % 32(@)(@@) % هضبات حلم سحن وهي شواهق % و مياه علم غصنو هي جمام % 33(@)(@@) % تبكي العلوم عليه في أوطانها % % و رياض تلك الصحف والأقلام % 34(@)(@@) % و أرى ذوي الآداب بعدك أمة % ضلتو ليس لها سواك إمام % 35(@)(@@) % ما بال أرضك أحرمتفرواؤها % % بعد ابتسام روائها الإحرام % 36(@)(@@) % قالواخبت نار على أعلامها % % قلناأجل وتهاوت الأعلام % 37(@)(@@) % قد كانت الأفهام صافية بها % % فالآنإذ صدئت بها الأفهام % 38(@)(@@) % و كأنما ارتحل الغنى عن أهلها % % لما ثويتو خيم الإعدام % 39(@)(@@) % قد كنت أحسن نعمة فزنا بها % % لو كان للنعم الحسان دوام % 40(@)(@@) % لازلت عرضة عارض متهلل % تخضر منه ضحاضح وإكام % PageV01P855 41(@)(@@) % تغدو الرياح عليكو هي لطائم % و يروح صوب المزنو هو مدام % 42(@)(@@) % و لئن غدت أرض حوتك كريمة % فلقد أتيح لها بك الإكرام % 43(@)(@@) % فعليك تضعيف السلام تحية % ما اعتم بالورق النضير سلام % PageV01P856 البحر : - 1(@)(@@) % يا ابن فهد و أنت بدر تمام % و حيا صوبه حياة الأنام % 2(@)(@@) % لحظت عزمتي العراقفسلت % همتي للرحيل سيف اعتزام % 3(@)(@@) % فسلام على جنابك والمن % % هل والظل والأيادي الجسام % 4(@)(@@) % غير أني أريد منك كتابا % مفردا يحتوي فريد الكلام % 5(@)(@@) % و نظام فيه الحلال من السح % ر تعالى عن كل سحر حرام % 6(@)(@@) % يغتدي منه سمع كل لبيب % في استماع و قلبه في ابتسام % 7(@)(@@) % فيه من ظاهر العناية ما يو % % جب حقي على الأمير الهمام % 8(@)(@@) % فاقض حقي فيه بساعد فكر % تحي شكري بها مدى الأيام % PageV01P857 البحر : - 1(@)(@@) % ها إنها خطط العلياء والكرم % و أين سافرة الأخلاق والشيم % 2(@)(@@) % رباع مجد بها من أهلها عبق % مخبر عن فراق منهم أمم % 3(@)(@@) % آثار واضحة الآثار تذكرنا % % عوائد الدهر في عاد وفي إرم % 4(@)(@@) % إذا تأملها الزور 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms207# الملم ثوى % % يحط بالدمع أثقالا من الألم % 5(@)(@@) % عهدي بهاو الليالي الغيد تابعة % أيامها البيض بين الخفض والنعم % 6(@)(@@) % إذ الزمان بها جذلان مبتسم % متوج بعلى جذلان مبتسم % 7(@)(@@) % أيام تلحظها الأيام خاشعة % لحظ الحجيج حرام الصيد في الحرم % 8(@)(@@) % و الورد نوعان من عفو ومن نعم % و الوفد ضربان من عرب ومن عجم % 9(@)(@@) % أين الشمائل يرتاح الثناء لها % % والسوق تنفق فيها حلية الكلم % % 10(@)(@@) % للهأي حسام فل مضربه % % مضارب المرهفينالسيف والقلم % PageV01P858 11(@)(@@) % خطب و هي عرش غسان بهو غدت % تيجان حمير من واه ومنصرم % 12(@)(@@) % أعل دجلةفانحطت غواربها % % و اصفر من جانبيها مورق السلم % 13(@)(@@) % أبناء فهد تولى العز بعدكم % فما أرى خائفا يأوي إلى عصم % 14(@)(@@) % أعزز علي بأن راحت دياركم % مثوى الهمومو كانت مسرح الهمم % 15(@)(@@) % كم في قبوركم من عارض هطل % و صارم فل حد الصارم الخذم % 16(@)(@@) % و من غطارفة شم أنوفهم % يلقون قبل الشفاه الماء بالشمم % 17(@)(@@) % أكل يوم له ثاو يقال له % % و قد تباعدلا تبعد ولا ترم % 18(@)(@@) % و ملحد ساخ في أحشائه علم % من المكارمبل نار على علم % 19(@)(@@) % قبر له من عيون المزن صوب حيا % و من عيون بني الآمال صوب دم % 20(@)(@@) % يجري النسيم على أرجاء تربته % تحية لطفت من بارىء النسم % PageV01P859 21(@)(@@) % ذممت عهد الليالي في تحيفكم % و لم تزل في العلى مذمومة الذمم % 22(@)(@@) % و قلت للدهرإذ غالت غوائله % % محمدا سوف تثوي غابر الندم % 23(@)(@@) % فتى أباح ذوي الإعدام تالده % % و راحلولا ازدياد الحمد بالعدم % 24(@)(@@) % من هزة الرمح أحلى في نواظره % من هزة الغصن بين الورد والعنم % 25(@)(@@) % ما كان جودكإذ ولت سحائبه % % و فضل حلمك إلا برهتي حلم % 26(@)(@@) % قل للشوامتمهلا ليس بينكم % و بين عادية الأيام من رحم % 27(@)(@@) % هي الرزية من يصبر لفادحها % % يؤجرو من يتحام الصبر لم يلم % 28(@)(@@) % أبا الفوراس تسليما و أي فتى % % لاقى الحوادث إلا ملقي السلم % 29(@)(@@) % و يا أبا الحسن استن العزاء فقد % % رأيت ما سنت الأيام في الأمم % 30(@)(@@) % ليس الثناء له ركنان مثلكما % % و إن تباعد قطراهبمنهدم % PageV01P860 31(@)(@@) % سأجعل المدح فيكم جل مأربتي % % و هل يعاف زهير المدح في هرم % 32(@)(@@) % مصدق 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms208# القول مصدوق الظنون بكم % % فالجود ملء يدي والصدق ملء فمي % % 33(@)(@@) % إذا رأيت القوافي الغر سائرة % فإنهن رياح الطول والكرم % 34(@)(@@) % كذا النسيم إذا فاحت روائحه % % فإنما هو شكر الروض للديم % PageV01P861 البحر : - 1(@)(@@) % تبين لي سبق الأمير إلى العلى % % و مازال سباقا إلى الفضل منعماحذف % % 2(@)(@@) % فصيرني بين القيان إذا شدت % و بين نداماهحجابا مكرماحذف % % 3(@)(@@) % لأظهرمن حسن الغناءمحللا % و أستر من حسن الوجوه محرماحذف % % PageV01P862 البحر : - 1(@)(@@) % أما للمحبين من حاكم % فينصفني اليوم من ظالميحذف % % 2(@)(@@) % حمامي في طرفه كامن % كمون المنية في الصارمحذف % % PageV01P863 البحر : - 1(@)(@@) % رأيتك تسدى للصديق نوافذا % عدوك من أوصابهاالدهرآمن % 2(@)(@@) % و تكشف أسرار الأخلاء مازحا % و يا رب مزح عاد وهو ضغائن % 3(@)(@@) % سأحفظ ما بيني وبينك صائنا % عهودك ؛ إن الحر للعهد صائن % 4(@)(@@) % و ألقاك بالبشر الجميل مداهنا % فلي منك خل ما علمت مداهن % 5(@)(@@) % أنم بما استودعته من زجاجة % ترى الشيء فيها ظاهرا و هو باطن % PageV01P864 البحر : - 1(@)(@@) % و جدول بين حديقتين % مطرد مثل حسام القين % 2(@)(@@) % كسوته واسعة القطرين % تنظر في الماء بغير عين % 3(@)(@@) % راصدة كل قريب الحين % تبرزه مجنح الجنبين % 4(@)(@@) % كمدية مصقولة الحدين % كأنما صيغت من اللجين % 5(@)(@@) % رزقا هنيئا يملأ اليدين % بغير كد و بغير أين % PageV01P865 البحر : - 1(@)(@@) % أنعته معصفر البردين % أبيض صافي حمرة الجنبين % 2(@)(@@) % خلف شهرين على الخلفين % ثم رعى بعدهما شهرين % 3(@)(@@) % فجسمه شبران في شبرين % يا حسنهو هو صريع الحين % 4(@)(@@) % تعرقه مرهفة الحدين % بكف شاو عطر الكفين % 5(@)(@@) % واقعة فيه سهام العين % بين ذراعين مفصلين % 6(@)(@@) % كسارق حد من اليدين % و طرف مستوقف الطرفين % 7(@)(@@) % يريك مرآة من اللجين % مذهبة المقبض والوجهين % 8(@)(@@) % شق حشاه عن شقيقتين % أختين في القد شبيهتين % 9(@)(@@) % كما قرنت بين كمأتين % أو كرتي مسك لطيفتين % 10(@)(@@) % إن شين ذو روقين ناجمين % فإنه زين بغير شين % PageV01P866 البحر : - 1(@)(@@) % بلاني الحب فيك بما بلاني % % فشاني أن تفيض غروب شاني % % 2(@)(@@) % أبيت الليل مرتفقا أناجي % % بصدق الوجد كاذبة الأماني % % 3(@)(@@) % فتشهد لي على الأرق الثريا % % و يعلم ما أجن الفرقدان % 4(@)(@@) % إذا دنت الخيام بهمفأهلا % بذاك الخيم والخيم الدواني % % 5(@)(@@) % فبين سجوفها أقمار تم % و بين عمادها أغصان بان % 6(@)(@@) % و مذهبة الخدود بجلنار % مفضضة 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms209# الثغور بأقحوان % 7(@)(@@) % سقانا الله من رياك ريا % و حيانا بأوجهك الحسان % 8(@)(@@) % ستصرف طاعتي عن من نهاني % % دموع فيك تلحى من لحاني % % 9(@)(@@) % و لم أجهل نصيحتهو لكن % جنون الحب أحلى في جناني % % 10(@)(@@) % فيا ولع العواذل خل عني ؛ % و يا كف الغرام خذي عناني % % PageV01P867 11(@)(@@) % و صائنة ببرقعها جمالا % يروح له الهوى رب الصيان % 12(@)(@@) % إذا أفنت سجايا الخصر منها % % ذممت لها سجايا الخيزران % 13(@)(@@) % تراوجني بأرواح الأغاني % % و تصحبني بأرواح الدنان % 14(@)(@@) % على روض كأن صباه بلت % غلائلها بماء الزعفران % 15(@)(@@) % تعن رياحه حسرى و يجري % % جموح المزن فيه بلا اعتنان % 16(@)(@@) % كأن يد الأمير دنت إليه % % بأوطف من سجال العرف دان % 17(@)(@@) % فتى حلو النوالإذا استميحت % أنامل كفهمر الطعان % 18(@)(@@) % نزور فناءه عصبا فنأوي % % إلى الجنن السوابغ والجنان % 19(@)(@@) % تخرق في ابتذال الوفرحتى % % توهمناه مخروق البنان % 20(@)(@@) % و راحو كنزه جرد المذاكي % % و أطراف المثقفة اللدان % PageV01P868 21(@)(@@) % منادمة القنا أحلى لديه % و أعظم من منادمة القيان % 22(@)(@@) % فقل لعدوهيكفيك منه % % سماعك بالردى دون العيان % 23(@)(@@) % فرزت الأفعوان الصل جهلا % فكيف وجدت ناب الأفعوان % 24(@)(@@) % بسطت على الزمان يديفأضحى % % و ليس له بما فعلت يدان % 25(@)(@@) % و كنت أروض من دهري أمانا % فعاد الدهر يسألني أماني % % 26(@)(@@) % بسيف حين يندب من سيوف % و رعن حين ينسب من رعان % 27(@)(@@) % و إذ هو كاليماني العضب يسطو % % فينقع غلة العضب اليماني % % 28(@)(@@) % يجرده كبرق الثغر صاف % و يغمده كورد الخد قاني % % 29(@)(@@) % كأن الضرب عوض شفرتيه % بماء الطبعماء الأرجوان % 30(@)(@@) % أتغلبقد حللت به مكانا % يريك النجم منخفض المكان % PageV01P869 31(@)(@@) % فضلت بفضله يوم العطايا % % و فزت بسبقه يوم الرهان % 32(@)(@@) % و قصر شأو من يرجو مداه % % عقال العجزأو قيد الحران % 33(@)(@@) % هجان المدح يطلبه هجين % و هل بلغ الهجين مدى الهجان % 34(@)(@@) % أبا الهيجاء عشت قرير عين % سليم العيش من نوب الزمان % 35(@)(@@) % و لازالت رباعك مخصبات % قريبات الجنى من كل حان % 36(@)(@@) % يغني الغيث كالنشوان فيها % % و يعثر بين هاتيك المغاني % % 37(@)(@@) % و إن أعرضت عن تعريض شكر % أثوب فيه تثويب الأذان % 38(@)(@@) % بناس منك يخبر عنه أني % % ظمئتو في يديك المرزمان % 39(@)(@@) % أوان تحامت الأيام سلمي % % و عدن علي بالحرب العوان 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms210# % 40(@)(@@) % و عض السيف مني كل عضو % جدير بالكرامة لا الهوان % PageV01P870 41(@)(@@) % و ألبسني القنا حللا تلاقت % علي تهز أهدابا قواني % % 42(@)(@@) % لقد علمت صروف الدهر ما اسمي % % بعتبكو اطلعن على مكاني % % 43(@)(@@) % فلست لغير حادثة نآد % و هل كرة لغير الصولجان % 44(@)(@@) % لعل الدهر يسعفني بعطف % يعيد علي عطفا في ليان % 45(@)(@@) % و يصبح بشرك المحجوب عني % % يبشرني بسعد إضحيان % 46(@)(@@) % و كف منك شاعرة العطايا % % تعلمني دقيقات المعاني % % 47(@)(@@) % رضاك العيش يعذب مجتناه % % و سخطك عاجل الحين المداني % % 48(@)(@@) % إذا ترك الشجاع بغير قلب % فكيف يكون في قلب الجبان % 49(@)(@@) % يشرد نومه عن مقلتيه % و لو حرصت عليه المقلتان % 50(@)(@@) % تهذب في الثناء عليك فكري % % و رقت فيه حاشيتا لساني % % PageV01P871 51(@)(@@) % و لو نطق الحديد لناب عني % % ذباب السيف أو حد السنان % PageV01P872 البحر : - 1(@)(@@) % أقررت يا ابن العصبالعيونا % % و رحت حبلا للخنا متينا % % 2(@)(@@) % علمت قوما كيف يقصفونا % % فاطرحوا الحشمةمسرعينا % % 3(@)(@@) % و دخلوا القبة آمنينا % % فأكلوايومهمسمينا % % 4(@)(@@) % و لم يكن سرورهم ممنونا % % يا من يرى زق الدنان دينا % % 5(@)(@@) % و من يداري العيش كي يلينا % % لا أسمع اللومو لا التهجينا % % 6(@)(@@) % ما العيشإلا للمنى هدينا % % مؤونة فضت على عشرينا % % 7(@)(@@) % و لو تفردت بها خرينا % % PageV01P873 البحر : - 1(@)(@@) % تأمل جديد الكتب وابدأ برثها % % و كن ضامنا أرواح ما تتضمن % 2(@)(@@) % فكم مخلق منها أفاد بديعة ؛ % و للذهب الإبريز في الترب معدن % PageV01P874 البحر : - 1(@)(@@) % هلمفقد بردت راحنا % % و أشفت على الشرب أقداحنا % % 2(@)(@@) % و علل من مائه وردنا % % و غير بالمسك تفاحنا % % 3(@)(@@) % و قد رد غلماننا شقرنا % % و قاد لنا الدهم ملاحنا % % 4(@)(@@) % فنحن بملتطم زاخر % مغررة فيه أشباحنا % % 5(@)(@@) % ندامى تراجع عذالنا % % عن العذلو ارتد نصاحنا % % 6(@)(@@) % ثقال لدى الوزن أحلامنا % % خفاف لدى القصف أرواحنا % % 7(@)(@@) % تخضب بالكأس أيماننا % % و تصبغ بالدم أرماحنا % % 8(@)(@@) % كأنا بنو هاشم صولة % إذا نفت الهم أفراحنا % % 9(@)(@@) % فيعطي الرغائب منصورنا % % و يدمي الترائب سفاحنا % % 10(@)(@@) % و وجهك يا حمد إن أظلمت % صروف الحوادث مصباحنا % % PageV01P875 11(@)(@@) % فإن تنأ ساءك هجاؤنا ؛ % وإن تدن سرك مداحنا % % PageV01P876 البحر : - 1(@)(@@) % سدت سيوفك خلة الثغرين % و فتحت من آرائك السدين % 2(@)(@@) % سيرت من عبديك في غاب القنا % % أسدين للأعداء مفترسين % 3(@)(@@) % رمحين مطردينبل 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms211# سيفين من % % صلتينبل نجمين منكدرين % 4(@)(@@) % صعق العدا بلظاهمافكأنما % % كانا على الأعداء صاعقتين % 5(@)(@@) % سارافسار الرعب يقدم منهما % % جيشين ما اتكلا على الجيشين % 6(@)(@@) % خرقا الدروب بجحفلينكأنما % % طلعت نجومهما على ليلين % 7(@)(@@) % إني لآمل أن يبشرك القنا % % و البيض من وجهين مختلفين % 8(@)(@@) % فتظل فضفاض المواهبساحبا % بردين للنعماء فضفاضين % 9(@)(@@) % أنت الحياو لربما قبض الحيا % % كفا و كفك نجعة الثقلين % 10(@)(@@) % و إذا الحسام نبت مضارب حده % كنت الحسام العضب ذا الحدين % PageV01P877 11(@)(@@) % عفو ومكرمة تروح وتغتدي % % بجناهما مستعذب الوردين % 12(@)(@@) % لو أن عبد الله عاين ما بنت % يمناك راح به قرير العين % 13(@)(@@) % الله سرك في أخيكو لم يكن % ليميل عرش العز ذي الركنين % 14(@)(@@) % ظفر أذل لآل فارسمنكم % بسيوف مشرف أو رماح ردين % 15(@)(@@) % ما حاولوا الحصن المنيف بغدرهم % % حتى انثنوا جثثا على الحصنين % 16(@)(@@) % ماجت صوارمه عليهمفانثنت % و لجين دجلة مذهب الموجين % 17(@)(@@) % فتح تبلج صبحهفأراكما % % بابين للسراء منفتحين % 18(@)(@@) % قوليإذا فجع الملوك بنكبة % أو ريع شملهم بوشك البين % 19(@)(@@) % حلا محل الفرقدينفأنتما % % أولى بموضعذينك النجمين % PageV01P878 البحر : - 1(@)(@@) % ألم ترني سطوت على الزمان % و لم أعط الخطوب به عناني % % 2(@)(@@) % تركنا الدين يحفظه أناس % أضاعوا فيه صالحة الأماني % % 3(@)(@@) % و عدنا من مساجدهم بدير % و بالناقوس من صوت الأذان % 4(@)(@@) % هي الخمرالتي كرمت وطابت % و أنت من الحوادث في أمان % 5(@)(@@) % و هذا العيش مختضر و قالوا % % لناعيش نصير إليه ثاني % % 6(@)(@@) % فخذ من صفو عيشك ما تراه % % فما الخبر المغيب كالعيان % 7(@)(@@) % دعابي أنف بالكاسات همي % % و أستعدي بهن على الزمان % 8(@)(@@) % و أعط النفس في الدنيا مناها % % فإني قد عرفت غدا مكاني % % PageV01P879 البحر : - 1(@)(@@) % كستك الشبيبة ريعانها % % و أهدت لك الراح ريحانها % % 2(@)(@@) % فدم للنديم على عهده % و غاد المدام وندمانها % % 3(@)(@@) % فقد خلع الأفق ثوب الدجى % % كما نضت البيض أجفانها % % 4(@)(@@) % و ساق يواجهني وجهه % فتجعله العين بستانها % % 5(@)(@@) % يتوج بالكأس كف النديم % إذا نظم الماء تيجانها % % 6(@)(@@) % فطورا يوشح ياقوتها % % و طورا يرصع عقيانها % % 7(@)(@@) % رميت بأفراسها حلبة % من اللهو ترهج ميدانها % % 8(@)(@@) % و دير شغفت بغزلانه % % فكدت أقبل صلبانها % % 9(@)(@@) % فلما دجى الليل فرجته % % بروح تحيف جثمانها % % 10(@)(@@) % بشمع أعير قدود الرماح % و سرج ذراها وألوانها 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms212# % % PageV01P880 11(@)(@@) % غصون من التبر قد أزهرت % لهيبا يزين أفنانها % % 12(@)(@@) % فيا حسن أرواحها في الدجى % % و قد أكلت فيه أبدانها % % 13(@)(@@) % سكرت بقطربل ليلة % صبوت فغازلت غزلانها % % 14(@)(@@) % و أي ليالي الهوى أحسنت % إليفأنكرت إحسانها % % PageV01P881 البحر : - 1(@)(@@) % نطوي الليالي علما أن ستطوينا % % فشعشعيها بماء المزن واسقينا % % 2(@)(@@) % و توجي بكؤوس الراح أيدينا % % فإنما خلقت للراح أيدينا % % 3(@)(@@) % قامت تهز قواما ناعما سرقت % % شمائل البان من أعطافه لينا % % 4(@)(@@) % تحث حمراء يلقاها المزاج كما % % ألقيت فوق جني الورد نسرينا % % 5(@)(@@) % فلست أدري أتسقينا وقد نفحت % % روائح المسك منهاأو تحيينا % % 6(@)(@@) % قد ملكتنا زمام العيش صافية % لو فاتنا الملك راحت عنه تسلينا % % 7(@)(@@) % و مخطف القد يرضينا ويسخطنا % % حسنا و يقتلنا دلا ويحيينا % % 8(@)(@@) % تفتحت وردتا خديه من خجل % و زيدتا بعذاريه تزايينا % % 9(@)(@@) % مازال ينقر أحشاء الدنان لنا % % حتى نفاهن مجروحا ومطعونا % % 10(@)(@@) % لما رأيت عيون الدهر تلحظنا % % شزرا تيقنت أن الدهر يردينا % % PageV01P882 11(@)(@@) % نمضي ونترك من ألفاظنا تحفا % تسبي رياحينها الشرب الرياحينا % % 12(@)(@@) % و ما نبالي بذم الأغبياءإذا % % كان اللبيب من الأقوام يطرينا % % 13(@)(@@) % و رب غراء لم تنظم قلائدها % % إلا ليحمد فيها الفاطميونا % % 14(@)(@@) % الوارثون كتاب الله يمنحهم % % إرث النبي على رغم المعادينا % % 15(@)(@@) % و السابقون إلى الخيرات ينجدهم % % عتق النجارإذا كل المجارونا % % 16(@)(@@) % قوم نصلي عليهم حين نذكرهم % % حبا و نلعن أقواما ملاعينا % % 17(@)(@@) % إذا عددنا قريشا في أباطحها % % كانوا الذوائب منها والعرانينا % % 18(@)(@@) % أغنتهمعن صفات المادحين لهم % % مدائح الله في طه وياسينا % % 19(@)(@@) % فلست أمدحهم إلا لأرغم في % % مدحيهم أنف شانيهم وشانينا % % 20(@)(@@) % أقام روح وريحان على جدث % شلو الحسين به ظمآنآمينا % % PageV01P883 21(@)(@@) % كأن أحشاءنا من ذكره أبدا % تطوى على الجمر أو تحشى السكاكينا % % 22(@)(@@) % مهلا فما نقضوا أوتار والده % % و إنما نقضوا في قتله الدينا % % 23(@)(@@) % آل النبيوجدنا حبكم سببا % يرضى الإله به عنا ويرضينا % % 24(@)(@@) % فما نخاطبكم إلا بسادتنا ؛ % و لا نناديكم إلا موالينا % % 25(@)(@@) % وكم لنا من فخار في مودتكم % % يزيدها في سواد القلب تمكينا % % 26(@)(@@) % و من عدو لكم مخف عداوته % % و الله يرميه عنا وهو يرمينا % % 27(@)(@@) % إن أجر في حبكم جري الجواد فقد % % أضحت رحاب مساعيكم ميادينا % % 28(@)(@@) % و كيف يعدوكم شعري وذكركم 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms213# % يزيد مستحسن الأشعار تحسينا % % PageV01P884 البحر : - 1(@)(@@) % عصى الرشاد فقد ناداه من حين % و راكض الغي في تلك الميادينحذف % % 2(@)(@@) % ما حن شيطانه العاتي إلى بلد % إلا ليقرب من دير الشياطينحذف % % 3(@)(@@) % و فتية زهر الآداب بينهم % أبهى و أنضر من زهر الرياحين % 4(@)(@@) % مشوا إلى الراح مشي الرخ و انصرفوا % % و الراح تمشي بهم مشي الفرازين % 5(@)(@@) % حتى إذا أنطق الناقوس بينهم % مزين الخصر رومي القرابينحذف % % 6(@)(@@) % يرى المدامة دينا حبذا رجل % يعد لذة دنياه من الدينحذف % % 7(@)(@@) % تفرقوا بين أعطان الهياكل في % % تلك الجنان و أقمار الدواوينحذف % % 8(@)(@@) % تحث أقداحهم بيض السوالف في % % حمر الغلائل في خضر البساتين % 9(@)(@@) % كأن كاساتهاو الماء يقرعها سألت الله مما كان عفوا وعدت بتوبة تركتك نضوى محوت فصائح اللذات لما محوت بها سطور الزفن محوافأضمر نائل الحنان هما وأعلن صنجك الصياح شكوى وكم للقصف من طلل محيل تأبد منك منزلة فأقوى تحن إليك حانة باطر بجى ويبكي الزندر % % ورد تصافحه أطراف نسرينسقط بيت من ص % % PageV01P885 البحر : - 1(@)(@@) % و ساق بحب الكأس أصبح مغرما % فللألاؤها أضحى كضوء جبينهحذف % % 2(@)(@@) % سقاني بها صرف الحميا عشية % و ثنى بأخرى من رحيق جفونهحذف % % 3(@)(@@) % هضيم الحشا ذو وجنة عندمية % يريك حمرار الورد في غير حينهحذف % % 4(@)(@@) % فأشرب من يمناه ما فوق خده % و ألثم من خديه ما في يمينهحذف % % PageV01P886 البحر : - 1(@)(@@) % وقال غتنموا وصل % فتاة برعت حسناحذف % % 2(@)(@@) % فجاءت تخجل البدر % و غصن البانة اللدناحذف % % 3(@)(@@) % و تصطاد قلوب الشر % ب أجفان لها وسنى حذف % % 4(@)(@@) % و قلنا يا لحاك الل % ه نزني بعدما شبناحذف % % PageV01P887 البحر : - 1(@)(@@) % إن الأمير المعلى في معاليه % أدق حظي وقد جلت أياديه % 2(@)(@@) % فرحت كالطائر استلت قوادمه % % و ليس تعلو به ضعفا خوافيه % % 3(@)(@@) % لقد عفا شطر رسمي من مكارمه % % و ليس يعجزه إصلاح عافيه % 4(@)(@@) % إن البناء إذا ما انهد جانبه % % لم يأمن الناس أن ينهد باقيه % % PageV01P888 البحر : - 1(@)(@@) % هويتهاو الفراق يهواها % % فحال بيني وبين لقياها % % 2(@)(@@) % و لم يكن للحمام بي قبل % لو لم تعنه علي عيناها % % 3(@)(@@) % مقسومة للنوى محاسنها % % و للفؤاد المشوق ذكراها % % 4(@)(@@) % حييتها والجنوب رافعة % جوانب السجف عن محياها % % 5(@)(@@) % فشمت من 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms214# ثغرهاعلى ظمإ % بارقة لا أنال سقياها % % 6(@)(@@) % لو أفرطت بالعقيق خجلتها % % أسلم ماء العقيق خداها % % 7(@)(@@) % و كيف تغنى بوصل غانية % مراحها للنوى ومغداها % % 8(@)(@@) % رقيبها في الظلام مبسمها % % و في سنا الصبح طيب رياها % % 9(@)(@@) % لعل أيامناالتي سلفت % % تعود بيضا كما عهدناها % % 10(@)(@@) % أيام لا أستميح غانية % إلا شرت دينها بدنياها % % PageV01P889 11(@)(@@) % ترتع حول الظباء آنسة % نظائرا في الجمال أشباها % % 12(@)(@@) % رقت عن الوشي نعمةفإذا % % صافح منها الجسوم وشاها % % 13(@)(@@) % أسلفني الدهر عندهن يدا % حتى إذا استحسنت تقضاها % % 14(@)(@@) % فاليوم لا أحسب الوصال غنى % و لا إخال الشباب لي جاها % % 15(@)(@@) % قد خلقت راحة الأمير حيا % تغلب صوب الحيا بجدواها % % 16(@)(@@) % كانت رياح السماح راكدة % حتى جرى سابقا فأجراها % % 17(@)(@@) % أغر طلق اليدين لو طلبت % % منه ليالي الشباب أعطاها % % 18(@)(@@) % إذا القوافي بذكره اشتملت % % عطرها ذكره وحلاها % % 19(@)(@@) % إن لحظ المشكلات أوضحها % % و إن سقى المرهفات أرواها % % 20(@)(@@) % كم نعمة للربيع جاد بها % % و نقمة كالحريق أطفاها % % PageV01P890 21(@)(@@) % تنال أقصى البلاد لحظته % % كأن أقصى البلاد أدناها % % 22(@)(@@) % لا تعجبوا من علو همته % % و سنه في أوان منشاها % % 23(@)(@@) % إن النجوم التي تضيء لنا % % أصغرها في العيون أعلاها % % 24(@)(@@) % مسدد تاهت الإمارة مذ % % نيط به عبئها وما تاها % % 25(@)(@@) % جاءته قبل الفطام سافرة % يهتز شوقا إليه عطفاها % % 26(@)(@@) % آمن في ظله رعيته % % خوف أعاديه حين عاداها % % 27(@)(@@) % أهملها في نوالهو غدا % % مشتملا بالحسام يرعاها % % 28(@)(@@) % إذا غدا المستميح أعدمها % % أعاده بالنوال أثراها % % 29(@)(@@) % من دوحة طال فرعهاو رست % % أصولهاو استلذ مجناها % % 30(@)(@@) % سرج أضاءت على الزمان فما % % أخمدها الدهر منذ أذكاها % % PageV01P891 31(@)(@@) % ينسبها للعيون رونقها % % تخلب بالحسن من ترداها % % 32(@)(@@) % كأن سحر العيون ساعدها % % فدب في لفظها ومعناها % % 33(@)(@@) % عذراء جلت عن الخدور فقد % % أصبح ركن الصدور مأواها % % PageV01P892 البحر : - 1(@)(@@) % بعثت في الميلاد لي بدعة % تحار فيها عين رائيها % % 2(@)(@@) % هدية لم أدر من ظرفها % % أعجب أم من ظرف مهديها % % 3(@)(@@) % قباب شمع يتحامى الدجى % % مجلسنا عند تلاليها % % 4(@)(@@) % كأنها أغصان تبر بدت % % زهرة نار في أعاليها % % 5(@)(@@) % أرواحها تأكل أجسامها % % عمدا و تفنى حين تفنيها % % 6(@)(@@) % سيافها يضرب أعناقها % % و هو بذاك الفعل يحييها % % PageV01P893 البحر : - 1(@)(@@) % أروم منك ثمارا لست أجنيها % % و أرتجي الحال 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms215# قد حلت أواخيها % % 2(@)(@@) % أستودع الله خلا منك أوسعه % % ودا ويوسعني غشا وتمويها % % 3(@)(@@) % كأن سري في أحشائه لهب % فما تطيق له طيا حواشيها % % 4(@)(@@) % قد كان صدرك للأسرار جندلة % ضنينة بالذي تخفي نواحيها % % 5(@)(@@) % فصار من بث ما استودعت جوهرة % رقيقة تستشف العين ما فيها % % PageV01P894 البحر : - 1(@)(@@) % أبا الحسين دعت نفسي أمانيها % % إلى يد منك مشهور أياديها % % 2(@)(@@) % فصرم الصوم عنا بعدما ظمئت % % له النفوس وفقد الراح يظميها % % 3(@)(@@) % فجد بعذراء مثل الشمس نعذرها % % إن أظهرت صلفا للحسن أو تيها % % 4(@)(@@) % و اعلم بأن ظروف الراح إن كبرت % % عند الهدية أبدت ظرف مهديها % % PageV01P895 البحر : - 1(@)(@@) % غداة الشك ندعوك % إلى الراح تغاديها % % 2(@)(@@) % فلا تنأ و لذات % ك دان منك نائيها % % 3(@)(@@) % فقد أضحت سجال الغي % % ث منهلا عزاليها % % 4(@)(@@) % و بسط الروض تغنيك % % عن البسط نواحيها % % 5(@)(@@) % ربا طيبة النشر % تحيي من يحيها % % 6(@)(@@) % إذا ضاحكها البرق % غدا الغيث يباكيها % % 7(@)(@@) % و عندي قينة تنث % ر در القول من فيها % % 8(@)(@@) % إذا دغدغت العود % رأيناه يناغيها % % 9(@)(@@) % و راح خلقت للطي % % ب من أنفاس ساقيها % % 10(@)(@@) % و ورد كخدود الغي % % د تحكيه ويحكيها % % PageV01P896 11(@)(@@) % و آداب جليات % دقيقات معانيها % % 12(@)(@@) % و علق يحمل الراي % ة لا غشا وتمويها % % 13(@)(@@) % دواء يحسم الأدوا % % ءإن عز مداويها % % 14(@)(@@) % فزرني تلق دنياكل % لما حاولته فيها % % PageV01P897 البحر : - 1(@)(@@) % لا تصغين إلى مقال سفيه % غاد عليك بزخرف التمويه % 2(@)(@@) % وشيت فيك القول كي تحظى به % فغدا يحرف لفظهو يشيه % % 3(@)(@@) % ما قلت قوادا يرب معيشه % % لكن مساعد خله وأخيه % 4(@)(@@) % بطل إذا لقي الكمي أماته % % قبل الطعان بطعنة من فيه % 5(@)(@@) % و مطارد لا الدرز يعصم صيده % % ما غاب فيهو لا الفرار يقيه % 6(@)(@@) % قد قلت إذ خلع القميصو حولت % % لحظاتهويل لمن يؤذيه % 7(@)(@@) % دم صيده جسمه وحرابه % أظفارهو طراده يعزيه % 8(@)(@@) % و لهإذا الأقفاص رحن عواريا % قفصا نصاب بليده من فيه % 9(@)(@@) % لو جاز أن يخفى على الله امرؤ % من خلقه خفي الذي يخفيه % 10(@)(@@) % كم خارج من داره ومخلف % فيها قبور بناته وبنيه % PageV01P898 11(@)(@@) % خلطت بها نطف السقاةفما يطا % % إلا على ابن سفيهة وسفيه % 12(@)(@@) % قبحت من ظلم القصائد عامدا % فنشرن عنك قبيح ما تطويه % 13(@)(@@) % فبحرمة 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms216# العصب الذي ألبسته % % و نباهة الأفعال تاج نبيه % 14(@)(@@) % لا تظلمن شعري ولا تتكرهن % ألفاظهفالمسك غير كريه % PageV01P899 البحر : - 1(@)(@@) % صبابة منك في تماديها % % و لوعة خطرات الشوق تبديها % % 2(@)(@@) % فالوجد يظهرها إن رحت أكمنها % % و الدمع ينشرها إن بت أطويها % % 3(@)(@@) % كم في الظعائن من ريم لواحظه % % تميت أنفاسهاطورا وتحييها % % 4(@)(@@) % و عبرة في احمرار الخد حائرة % كأنما مرح الصهباء جاريها % % 5(@)(@@) % هي الظباء فإن ريعت بوشك نوى % رعى القلوب بألحاظ تواليها % % 6(@)(@@) % أغرى بي الوجد منهن القدودفإن % رمت السلو ثنى قلبي تثنيها % % 7(@)(@@) % لا أزجر الدمع إن همت سواكبه % % و النفس قد بعدت منها أمانيها % % 8(@)(@@) % سقاك بالموصل الزهراء من بلد % جود من الغيث يحكي جود أهليها % % 9(@)(@@) % أأندب العيش فيها أم أنوح على % % أيامها أم أعزى عن لياليها % % 10(@)(@@) % أرض يحن إليها من يفارقها % % و يحمد العيش فيها من يدانيها % % PageV01P900 11(@)(@@) % ميساء طيبة الأنفاس ضاحكة % تكاد تهتز عجبا من نواحيها % % 12(@)(@@) % تشق دجلة أنوار الرياض بها % % مثل الصفيحة مصقولا حواشيها % % 13(@)(@@) % لا أملك الصبر عنها إن نأيت ولو % % عوضت من ظلها الدنيا بما فيها % % 14(@)(@@) % محل قوم ينوبالدهرجودهم % عن السحائب إن ضنت هواميها % % 15(@)(@@) % و دوحة بفروع الأزد باسقة % يفنى الزمانو لا تفنى مساعيها % % 16(@)(@@) % ما نابت المجد والعلياء نائبة % إلا و جود بني فهد تحليها % % 17(@)(@@) % إن المكارم أخلاق تسربلها % % أبو الفوارس فاختالت به تيها % % 18(@)(@@) % مواهب كلما راحت روائحها % % من راحتيه غدت تهمي غواديها % % 19(@)(@@) % و همة لاتزال الدهرجارية % مع الكواكب في أعلى مجاريها % % 20(@)(@@) % و عزمة ينطوي الليل البهيم بها % % كأنما الصبح جزء من تلاليها % % PageV01P901 21(@)(@@) % عمت فواضله الدنيافهمته % % إسعاف طالبهاأو فك عانيها % % 22(@)(@@) % يحوي المنى قبل بذل الوجه آمله % % إذا الملوك انثنى باليأس راجيها % % 23(@)(@@) % أبا الفوارسكم أوليت من نعم % سيان في الجود دانيها وقاصيها % % 24(@)(@@) % وكم تسربلت من سربال مكرمة % جلت ولكنها دقت معانيها % % 25(@)(@@) % شمائل منك يخجلن الرياضإذا % % تبسم النور غضا في مغانيها % % 26(@)(@@) % كأنما الغيث خلق من خلائقها % % أو المنية إسم من أساميها % % 27(@)(@@) % لأصفحن عن الأيام إذ صفحت % عني بأفعالك الحسنى مساويها % % 28(@)(@@) % يا آل فهد أقامت في دياركم % نعمى يواصل صفو العيش صافيها % % 29(@)(@@) % فإن بأسكم أمن لخائفها % % كما 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms217# نوالكم ري لصاديها % % 30(@)(@@) % إن المكارم أعطتكم أزمتها % % فليس غيركم في الناس يحويها % % PageV01P902 البحر : - 1(@)(@@) % منازلنا التي لبست بلاها % % و حالت بعد نضرتهاحلاها % % 2(@)(@@) % خطتك ركابنا لحلول خطب % أناخ على رباك فما خطاها % % 3(@)(@@) % منحناها القلى كرها و لولا % % صروف الدهر لم نختر قلاها % % 4(@)(@@) % يميل بنا الهوى طربا إليها % % فنبكيها ونسعد من بكاها % % 5(@)(@@) % تلقاها الزمان بخفض عيش % و عاودها السرور كما بداها % % 6(@)(@@) % نقول لهاسقاها الغيث ريا % و قل لها مقالتناسقاها % % 7(@)(@@) % قصور حلقت في الجو حتى % % لقصرت الكواكب عن مداها % % 8(@)(@@) % مشرفة كأن بنات نعش % تناجيهاإذا خفقت شفاها % % 9(@)(@@) % يتوجها اصفرار الشمس تبرا % فتمشي و هي مذهبة ذراها % % 10(@)(@@) % و جنات يحيي الشربوهنا % جنى وهداتهاو جنى رباها % % PageV01P903 11(@)(@@) % مصندلة الثرى و الريح تأبى % % غرائب حسنها إلا اشتباها % % 12(@)(@@) % إذا ركد الهواء علت نسيما % و إن فقد الغمام طغت مياها % % 13(@)(@@) % تفرج وشيها عن ماء ورد % يفيض على لآل من حصاها % % 14(@)(@@) % إذا صلت بها أوقات فرض % جباه الشرب عطرت الجباها % % 15(@)(@@) % و ذائدة دموع العين صفوا % إذا باتت ترقرق في صفاها % % 16(@)(@@) % تعانق ريحها لمم الخزامى % % و أعناق القرنفل في سراها % % 17(@)(@@) % و يأبى زهرهاإلا هجوعا ؛ % و يأبى عرفها إلا انتباها % % 18(@)(@@) % قراها الدهر بوسى واقشعرت % مغانيها الحسانكما قراها % % 19(@)(@@) % ذوت أشجارها الغيد اللواتي % % إذا عبث النسيم بها ثناها % % 20(@)(@@) % و قد مري الحمام بها وكانت % % على الأفنان لا يغني مراها % % PageV01P904 21(@)(@@) % كأن لم تغن عرصتها بخضر % يقيد لحظ مبصرها غناها % % 22(@)(@@) % ترقرق في نواظرها دموع % أحب إلى النواظر من كراها % % 23(@)(@@) % و ساقية كأن الريح ساقت % % إليها الخوف فارتعدت حشاها % % 24(@)(@@) % إذا نظم الشقائق جانبيها % % أرتك صفائحا دميت ظباها % % 25(@)(@@) % عفت منا السويقة فالمصلى % % فمشرقة المياه فملتقاها % % 26(@)(@@) % ملاعب لو جلين غداة دجن % على النعمان آثر مجتلاها % % 27(@)(@@) % يجلل ريحها الريحان حسرى % % معنبرة الهبوب وهت قواها % % 28(@)(@@) % و يقصد أو يجور بها سواق % كحيات الرمال عصت رقاها % % 29(@)(@@) % و تبتسم القباب البيض منها % % على خضراء محمر جناها % % 30(@)(@@) % على جرعاء ميساء النواحي % % يلبد نقع تربتها نداها % % PageV01P905 31(@)(@@) % تساق إلى أصائلها الندامى % % فتنسيهم أصائلها ضحانا % % 32(@)(@@) % تراءت من كفاح الدهر غبرا % كأن عجاج حومتها علاها % % 33(@)(@@) % فما لنعيمها انقصمت عراها ؛ % و 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms218# ما لرياضها حسرت كساها % % 34(@)(@@) % و ما لرياحها العطرات ردت % % رداء الحلم ودرعت سفاها % % 35(@)(@@) % أحين أظلها سلم الليالي % % و قلناقد تجنبها أذاها % % 36(@)(@@) % رماها بالتي عظمتو لكن % % أصاب قلوبنا لما رماها % % 37(@)(@@) % فمال بمعشر عرر إليها % % و مال بنا إلى أخرى سواها % % 38(@)(@@) % أراذل ليس تحمي الأسد غيلا % كما تحمي روائحها حماها % % 39(@)(@@) % عراة في الجنائب لا تبالي % % أصد العار عنها أم عراها % % 40(@)(@@) % لهتناأن نلم بساحتيها % % رياح إن سطت أردت سطاها % % PageV01P906 41(@)(@@) % و أمواه لو ان الترب يشكو % % مجاورة الأذى يوما شكاها % % 42(@)(@@) % فلو غسلت بماء المزن منهم % % و ماء البحر لم يطهر ثراها % % 43(@)(@@) % يحن الطائر الموفي عليها % % و توسع كل ماشية خطاها % % 44(@)(@@) % سلام الله منك على رباع % نأت أحبابهاو دنت عداها % % 45(@)(@@) % و طيبة النسيم عدت علينا % % جنائبهاو عادتنا صباها % % 46(@)(@@) % و كافورية البنيان تثني % % على من خطهاأو من بناها % % 47(@)(@@) % محلقة يكل الطرف عنها % % إذا ما الطرف حاول منتهاها % % 48(@)(@@) % تضيء إذا الدجى اشتملت عليها % % فتحسبها مؤلقة دجاها % % 49(@)(@@) % بعثت الطرف مشتاقا إليها % % فكاد يرده عنها سناها % % 50(@)(@@) % و حببها إليو إن تولت % % مآرب بلغت نفسي مناها % % PageV01P907 51(@)(@@) % لقد كانت جلاء العين حسنا % فعادت وهي من قبح قذاها % % 52(@)(@@) % عقاب الدهر بقياه عليها % % و عفو الدهر عنها لو عفاها % % 53(@)(@@) % فيا نوب الخطوب إليك عنها % % كفاها ما ألم بهاكفاها % % PageV01P908 البحر : - 1(@)(@@) % سألت الله مما كان عفوا % و عدت بتوبة تركتك نضواحذف % % 2(@)(@@) % محوت صحائف اللذات لما % % محوت بها سطور الزفن محواحذف % % 3(@)(@@) % فأضمر نايك الحنان هما % و أعلن صنجك الصياح شكوى حذف % % 4(@)(@@) % و كم للقصف من طلل محيل % تأبد منك منزلهفأقوى حذف % % 5(@)(@@) % تحن إليك حانة باطر تحى % % و يبكي الزندرود عليك شجوى حذف % % 6(@)(@@) % أحقا عاد طعم العيش مرا % و كان بزفنك المرموق حلواحذف % % 7(@)(@@) % و جف قضيبه المياس رقصا % و طار هزاره الغريد شأواحذف % % 8(@)(@@) % أفارسأنت أحسن من تثنى % % على صنج وأملح من تلوى حذف % % 9(@)(@@) % أصيب العيش منك بخير حاد % يحث ركائب الصهباء حدواحذف % % 10(@)(@@) % إذا اختلجت مناكبه لرقص % نزت طير القلوب إليه نزواحذف % % PageV01P909 11(@)(@@) % أعاد حكاية الشيخين جدا % و كان حكاهما لعبا ولهواحذف % % 12(@)(@@) % فأصبح زفنه لغة وشعرا % و أمسى عزفه 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms219# جدلا ونحواحذف % % 13(@)(@@) % يخف به رواة عنه علما % زلالا إن سقانا منه أروى حذف % % 14(@)(@@) % فمقتبس من المصباح نورا % و مغترف من التيار صفواحذف % % 15(@)(@@) % فلا يبعد زمان منك عادت % % مواهبه على الفتيان بلوى حذف % % 16(@)(@@) % ليال بالمعازف منك تنضى % % و أيام بحث الراحتطوى حذف % % 17(@)(@@) % قعدت وكم نهضت إلى التصابي % % بنقر الدف توسع فيه خطواحذف % % 18(@)(@@) % فأظهرت الزمانة في زمان % حززت به من اللذات عضواحذف % % PageV01P910 البحر : - 1(@)(@@) % غدا تبدي مدامعنا الخفايا % % إذا زمت لطيبتها المطايا % % 2(@)(@@) % وقفنا نحمد العبرات لما % % رأينا البين مذموم السجايا % % 3(@)(@@) % كأن خدودهنإذا استقلت % شقيق فيه من طل بقايا % % 4(@)(@@) % و قد فوقن بالألحاظ نبلا % قلوب العاشقين لها رمايا % % 5(@)(@@) % تمنينا اللقاءفكان حتفا % و كم أمنية جلبت منايا % % 6(@)(@@) % أرى الآفاق قد ملئت سرورا % بتغليب الأمير أبي السرايا % % 7(@)(@@) % بمولود يراه الله ليثا % و غيثا يستهل على البرايا % % 8(@)(@@) % نجيب أنتجته كرام قوم % فجاء شبيههم حزما ورايا % % 9(@)(@@) % ثناي عليهم ما دمت حيا % ثناء المستهام على الثنايا % % 10(@)(@@) % كأني بالأمير وقد بلاه % يكشف زائدا عنه البلايا % % PageV01P911 11(@)(@@) % و قطع أنفس الحساد غيظا % بسؤددهفطيرها شظايا % % 12(@)(@@) % و أصبحت الدروع له شفوفا % خفافا و السروج له حشايا % % 13(@)(@@) % إذا ما سابق الأكفاء يوما % إلى الغايات خلفهم رزايا % % 14(@)(@@) % يجور على التليد إذا استميحت % % أنامله ويعدل في القضايا % % 15(@)(@@) % حياة المجد أن يحياو تفني % % أعاديه الحوادث والرزايا % % 16(@)(@@) % فقللأبي المظفر قد ظفرنا % % بما نرجو لديك من العطايا % % 17(@)(@@) % فضلت فكنت بحرا حين كانوا % % ثمادا يستمد من الركايا % % 18(@)(@@) % و لولا الفضل لم نشعر بنقص % و لولا النسك لم تبر الخطايا % % 19(@)(@@) % و من يهد الحيا لرياض حمد % يفز منها بألطاف الهدايا % % 20(@)(@@) % كما جاد السحاب الجود أرضا % فأبرز من محاسنها الخبايا % % PageV01P912 21(@)(@@) % و قد جاءت مدائحنا نقودا % فلا تجعل جوائزها نسايا % % PageV01P913 البحر : - 1(@)(@@) % تذكر أيامه الخالية % % فما رقأت عبرة جاريه % % 2(@)(@@) % أقول لمعتكر الطرتين % من الغيث ملتهب الحاشيه % % 3(@)(@@) % على الربض المرتدي بالرياض % سجالك والبيعة الدانيه % % 4(@)(@@) % على طلعة الجد نغنى بها % % عن الصبح في الليلة الداجيه % % 5(@)(@@) % و حسناء لما يشن حسنها % % تقادم أعوامها الماضيه % % 6(@)(@@) % و مأهولة من تماثيلها % % إذا هي يوما غدت خاليه % % 7(@)(@@) % و ما منح الشمس شماسها 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms220# % % و ما خبأ القس في الخابيه % % 8(@)(@@) % فسقيا لملعب غزلانها % % و أعظم رهبانها الباليه % % 9(@)(@@) % و ساحرة الطرف مطبوعة % على الظرف مقسمة شافيه % % 10(@)(@@) % و نقش عبير على وجنة % كما نقش الورد بالغاليه % % PageV01P914 11(@)(@@) % رباع تقنصت غزلانها % % و قارعت آسادها الضاريه % % 12(@)(@@) % إذا غنت الطير فيها ضحى % % حسبت القيان بها شاديه % % 13(@)(@@) % و إن راح رعيانها أطربتك % فواقد أولادها الثاغيه % % 14(@)(@@) % لقيت سروري بها كاملا % و صافحت كأسي بها وافيه % % 15(@)(@@) % فإن أرها سالما أستلم % % فوارع أركانها العاليه % % 16(@)(@@) % وأغش بحانة أترجة % أمت ثالث الدن والباطيه % % 17(@)(@@) % و يغمز كفي كف النديم % و يومض طرفي إلى الساقيه % % 18(@)(@@) % و أسبق بالشكر أولى الصلاة % و أثني العنان إلى الثانيه % % 19(@)(@@) % و أضرب بالفص وجه الثرى % % فإما علي وإما ليه % % 20(@)(@@) % فإن كنت للخلد ريحانة % فدعني أكن حطب الهاويه % % PageV01P915 21(@)(@@) % و إن كنت تدعو إلى مذهب % فإني إلى تركه داعيه % % PageV01P916 البحر : - 1(@)(@@) % قصدتك لم أرد رفدا وأنى % % يروم من الصفا العطشان ريا % % 2(@)(@@) % و كم من مانع جدواه بخلا % يكون بجاهه برا حفيا % % 3(@)(@@) % فكان لحاظك المكرور شزرا % و كان جوابك المفهوم عيا % % 4(@)(@@) % فلو أني امتدحتك مستميحا % سللت علي عضبا مشرفيا % % PageV01P917 البحر : - 1(@)(@@) % أما وأبيك لا أنساه تدمي % % مضارب سيفه البطل الكميا % % 2(@)(@@) % و برقا في أناملهإذا ما % % تألق فتح الورد الجنيا % % 3(@)(@@) % إذا ظمئت فراخ أبيك يوما % سقاها من رقاب القوم ريا % % 4(@)(@@) % و ان جرح الأخادع مطمئنا % كسا الأوداج ديباجا بهيا % % 5(@)(@@) % و لم أر مثله يدعى عقوقا % فيدعوه الورى برا حفيا % % PageV01P918