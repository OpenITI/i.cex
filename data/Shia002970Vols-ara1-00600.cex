urn:cts:arabLit:1313Barujirdi.Taraif.Shia002970Vols-ara1:ms402# سالم الكوفي " ق ".(@)(@@) 5089 - عمرو بن يزيد الهمداني الكوفي " ق ".(@)(@@) 5090 - عمر بن أبان الكلبي أبو حفص، مولى كوفي ثقة، روى عن " ق ".(@)(@@) عليه السلام، له كتاب، عنه عباس بن عامر القصباني، والحسن بن محمد بن سماعه، وفي " مشكا " أبو حفص بن أبان الكلبي الثقة، عنه العباس والحسن وفضالة وهو عن ضريس.(@)(@@) 5091 - عمر أبو حفص الرماني أو اليماني، كوفي ثقة، له كتاب عنه جماعة منهم عبيس " جش " وفي " صه " روى عن " ق " عليه السلام وعن رجل عنه عليه السلام وفي " ست " عمر اليماني وقيل: الرماني يكنى أبا حفص، له كتاب، رواه عبيس بن هشام.(@)(@@) 5092 - عمر أبو حفص الزبالي، روى عن " ق " عليه السلام، له كتاب، عنه جماعه منهم عبيس " جش " وفي " تعق " لا يبعد كونه الزماني المتقدم، ومنشأ ذكره تصحيف الرماني بالزباني كما في النقد، ويؤيده اتحاد الطريق إليهما من حميد الخ.(@)(@@) 5093 - عمر أبو حفص القزاز الكوفي " ق ".(@)(@@) 5094 - عمر بن أبي زياد الابزاري الكوفي " ق " روى عن " ق " عليه السلام PageV01P542(@)(@@) ثقة " صه " " جش " له كتاب " ست " " جش " وزاد حميد عن أبي غالب عنه بكتابه، وفي " مشكا " ابن أبي زياد الثقة عنه أبو غالب.(@)(@@) 5095 - عمر بن أبي زياد الكوفي " ق ".(@)(@@) 5096 - عمر بن أبي سليمان الصائغ الفزاري، مولاهم كوفي " ق ".(@)(@@) 5097 - عمر بن أبي شعبة الحلبي " ق " التيمي كوفي. ويظهر من توثيق آل أبي شعبة توثيقه مجملا، كما تقدم في عبيد الله، وقد أشار إليه الميرزا، وفي " تعق " استظهر كونه عم عبيد الله واخوته، وكونه ثقة من مجموع قولهم وكانوا جميعهم ثقات مرجوعا إليهم، بناءا على رجوع الضمير إلى آل شعبة فيدخل فيهم، فتدبر، عنه حماد بن عثمان.(@)(@@) 5098 - عمر بن أبي المقدام، واسم أبي المقدام ثابت الحداد، روى عنهما " ق ".(@)(@@) واستظهر الميرزا أنه عمرو كما تقدم، والتكرار مقتضاه التعدد ظاهرا، فهو أخو عمرو، وهو في التالية.(@)(@@) 5099 - عمر بن أبي نصر السكوني مولى وأخوه رباح " ق " وفي " تعق " الظاهر أنه عمرو المذكور، وبلا واو اشتباه وفاقا للوجيزة، وفي النقد أيضا احتمل الاتحاد، أقول: لا ثمرة في 
urn:cts:arabLit:1313Barujirdi.Taraif.Shia002970Vols-ara1:ms403# البحث عن الاتحاد والاختلاف كما لا يخفى.(@)(@@) 5100 - عمر أخو عذافر، فيه حديث عن الصادق عليه السلام يدل على حسن حاله ولكن سنده ضعيف، فتأمل، وهو ابن عيسى الآتي.(@)(@@) 5101 - عمر بن أذينة، ثقة له كتاب، عنه ابن أبي عمير، وصفوان، والحسن بن محمد بن سماعة، وأحمد بن ميثم " ست " وكان هرب من المهدي العباسي ومات باليمن.(@)(@@) 5102 - عمر بن إسماعيل الجعفي الكوفي " ق ".(@)(@@) 5103 - عمر بن الأسود البكري الكوفي، أسند عنه " ق ".(@)(@@) 5104 - عمر بن الأشعث التميمي، مولاهم كوفي " ق " قيل: الظاهر أنه عمرو كما تقدم عن " قي " كما يستفاد من الميرزا، فتأمل. PageV01P543(@)(@@) 5105 - عمرو بن البراء البارقي الكوفي " ق ".(@)(@@) 5106 - عمر بن البراء الكوفي " ق " وفي " قي " عمر بن البراء روى عنه ابن مسكان، والظاهر اتحاد الكل أو اتحادهما.(@)(@@) 5107 - عمر بن توبة أبو يحيى الصنعاني، روى عن الصادق عليه السلام ضعيف لا يلتفت إليه، ولا أعتمد على شئ مما يرويه " صه " في حديثه بعض الشئ نعرف منه وننكر، عنه كامل بن أفلح " جش " ويأتي في الكنى ما ينبغي أن يلاحظ.(@)(@@) 5108 - عمر بن ثابت بن هرم أو هرمز، أبو المقدام الحداد، مولى بني عجلان، كوفي روى عن " ين " و " قر " و " ق " عليهم السلام ضعيف جدا قاله " غض " ووثقه " صه " تقدم في عمرو وعمر ابني أبي المقدام، وهو في الطبقتين الآتيين.(@)(@@) 5109 - عمر بن جبير الكوفي " ق ".(@)(@@) 5110 - عمر بن حبيب المكي " ق ".(@)(@@) 5111 - عمر بن حسان الأزدي " ق " " جخ " ثقة " د " الموجود بغير توثيق كما تقدم. والظاهر التعدد للتكرار فهو أخوه، والله أعلم.(@)(@@) 5112 - عمر بن حسان الطائي الكوفي " ق ".(@)(@@) 5113 - عمر بن حطيم العجلي الكوفي " ق ".(@)(@@) 5114 - عمر بن حفص أبو حفص بياع اللؤلؤ كوفي " ق " وفي " د " ابن حفص الرماني " ق " " جخ " والموجود في " ق " انما هو أبو حفص الرماني، والظاهر أنه ثقة وقد مضى فلاحظ.(@)(@@) 5115 - عمر بن حنظلة العجلي البكري الكوفي أبو صخر، وقد وثقه " شه " وقد ورد فيه حديث عن " ق " عليه السلام يشعر بحسن حاله، ولكن قوى في بداية الدراية توثيقه من قوله عليه السلام " إذا 
urn:cts:arabLit:1313Barujirdi.Taraif.Shia002970Vols-ara1:ms404# لا يكذب علينا " لحديث وفي " مشكا " ابن حنظلة عنه ابن مسكان.(@)(@@) 5116 - عمر بن خالد الحناط بالنون لقبه الأفرق، مولى ثقة عين " صه " ونحوه " جش " و " د " وتقدم عمرو عن " ست " و " ق " و " قي " ويحتمل التعدد بالاخوة PageV01P544(@)(@@) والاتحاد بالتصحيف.(@)(@@) 5117 - عمر ختن يحيى بن زكريا الكوفي " ق " وقد تقدم عن " قي " عمرو.(@)(@@) 5118 - عمر بن الخطاب بن الهيثم الكوفي " ق ".(@)(@@) 5119 - عمر بن خليد الكوفي " ق ".(@)(@@) 5120 - عمر بن خليفة الخثعمي الكوفي " ق ".(@)(@@) 5121 - عمر بن خليفة النميري الكوفي " ق ".(@)(@@) 5122 - عمر بن دينار " قي " ابن دينار مولى ابن بازان المكي تابعي " ق " وربما قيل: عمرو كما تقدم.(@)(@@) 5123 - عمر بن الربيع أبو أحمد البصري " ق " " ست " " جش " " صه " ثقة، روى عن الصادق عليهما السلام فيهما، له كتاب، عنه الحسن بن الحسين في الأولين، وفي " تعق " مر توثيقه أيضا عن المفيد في زياد بن المنذر وفي " مشكا " ابن الربيع الثقة، عنه الحسن بن الحسين.(@)(@@) 5124 - عمر بن رباح الزهري القلا مولى " ق " وفي " د " الأهوازي بدل الزهري، وفي " صه " بتري وعن " كش " واقفي. والظاهر أن القلا غير البتري. والظاهر من النقد الاتحاد، وفي البحث فيه مجال لا يسع المقام.(@)(@@) 5125 - عمر بن زاهر الهمداني مولى كوفي " ق ".(@)(@@) 5126 - عمر بن زائدة الأزدي الكوفي، أسند عنه " ق ".(@)(@@) 5127 - عمر بن زياد الخزاعي الكوفي " ق ".(@)(@@) 5128 - عمر بن سالم البزاز صاحب السابري كوفي " ق " وأخوه حفص رويا عن الصادق عليه السلام، وكانا ثقتين " صه " " جش " له كتاب، عنه ابن أبي عمير فيه وفي " ست " وفي " مشكا " ابن سالم الثقة عنه محمد بن زياد.(@)(@@) 5129 - عمر بن سعيد بن مسروق أبو حفص الثوري الكوفي، أسند عنه، ابن أخي سفيان " ق " والمراد منه سفيان بن سعيد الثوري، وفي " تعق " استظهر كون لفظ ابن زائدة في " ق " وقد صرحا به في النقد والمجمع. PageV01P545(@)(@@) 5130 - عمر بن شبيب بن عمر المسلي الكوفي " ق ".(@)(@@) 5131 - عمر بن شجرة الكندي الكوفي " ق " وفي " تعق " في بصائر الدرجات عن زرارة قال: كنت أنا وعبد الواحد بن المختار ومعنا عمر بن شجرة عند الصادق عليه 
urn:cts:arabLit:1313Barujirdi.Taraif.Shia002970Vols-ara1:ms405# السلام فقام عمر يخرج، فقال: من هذا؟ قلنا: عمر بن شجرة وأثنينا عليه وذكرنا من حاله وورعه وحبه لاخواننا، فقال: لا أرى لكما علما بالناس ان ذا من أخبث الناس أو من شرهم.(@)(@@) 5132 - عمر بن شداد الأزدي كوفي " ق " قال الميرزا: واتفقت نسخ من لا يحضره الفقيه على عمرو، فتأمل. ولعل أمره بالتأمل ارشاده إلى احتمال التعدد أو عدم امكان استقصاء نسخه، والله أعلم.(@)(@@) 5133 - عمر بن عاصم، له كتاب، عنه ابن أبي عمير " ست " وفي " مشكا " ابن عاصم عنه ابن أبي عمير. أقول: وفيه اشعار بل دلالة على الوثاقة.(@)(@@) 5134 - عمر بن عاصم الأزدي البصري أبو الوليد، أسند عنه " ق " أقول:(@)(@@) والظاهر أنه هو من ذكرناه عن " ست " ولذا جعله في المنتهى في عنوان واحد.(@)(@@) 5135 - عمر بن عاصم الكوفي " ق ".(@)(@@) 5136 - عمر بن عبد الله الأزدي الكوفي أبو صفوان " ق ".(@)(@@) 5137 - عمر بن عبد الله بن علي، أبو إسحاق الهمداني السبيعي الكوفي تابعي " ق " تقدم أنه عمرو. وفي مجمع البحرين روى أنه صلى أربعين سنة صلاة الغداة بوضوء العتمة ويختم القرآن في كل ليلة ولم يكن أعدل وأوثق منه في الخاص والعام، وكان من ثقات " ين " عليه السلام له تسعون سنة (1)، ولا يخفى أنه أيضا في التاليين.(@)(@@) 5138 - عمر بن عبيد الله " ق ".(@)(@@) 5139 - عمر بن عبد الله الأزرق أبو علي " ق " " كش " " د " قال الميرزا:(@)(@@) الموجود انما هو عمرو في " جش " و " ق " كما تقدم.(@)(@@) PageV01P546(@)(@@) 5140 - عمر بن عطاء بن وشيكة الكوفي " ق ".(@)(@@) 5141 - عمر بن العطاف الجعفي كوفي " ق ".(@)(@@) 5142 - عمر بن عكرمة الكوفي " ق ".(@)(@@) 5143 - عمر بن عنكثة، أبو حفص الخزاز الأسدي الكوفي " ق ".(@)(@@) 5144 - عمر بن عيسى الصيرفي مولى، وأخوه عذافر " ق " تقدم عمر أخو عذافر.(@)(@@) 5145 - عمر بن قيس المكي أبو حميد بن قيس يعرف بسندل " ق " وعن نسخة عمر بن أبي قيس، وفي المنتهى بعد ذكر ما في " ق " أقول: يأتي في الألقاب ذكره، ولعل الأولى بدل أبو " أخو " فتدبر، وفيه تأمل.(@)(@@) 5146 - عمر بن محمد بن زيد بن عبد الله بن عمر بن الخطاب القرشي 
urn:cts:arabLit:1313Barujirdi.Taraif.Shia002970Vols-ara1:ms406# العدوي المدني دخل الكوفة، أسند عنه " ق " وعن نسخة ابن محمد بن يزيد كما يأتي، وهذا على ما هو الظاهر ينتهي نسبه إلى الثاني.(@)(@@) 5147 - عمر بن محمد بن شداد الأزدي " ق ".(@)(@@) 5148 - عمر بن محمد بن عبد الرحمن بن أذينة، شيخ أصحابنا البصريين ووجههم، روى عن الصادق عليه السلام بمكاتبة، له كتاب الفرائض " جش " " صه " وفيها وكان ثقة صحيحا، وعن " شه " ذهابه إلى الاتحاد مع ابن أذينة، وفي " تعق " استظهره كما عن غيره.(@)(@@) 5149 - عمر بن محمد بن يزيد بن عبد الله بن عمر بن الخطاب القرشي العدوي المدني، دخل الكوفي، أسند عنه " ق ".(@)(@@) 5150 - عمر بن محمد بن يزيد أبو الأسود بياع السابري، مولى ثقيف كوفي ثقة جليل أحد من كان يفد في كل سنة، روى عن الصادق والكاظم عليهما السلام " صه " " جش " وأثنى عليه عليه السلام شفاها " صه " كما يأتي في ابن يزيد، عنه ابن عذافر، ومحمد بن عبد الحميد.(@)(@@) 5151 - عمر بن مدرك الطائي الكوفي أبو علي الطائي " قي ". PageV01P547(@)(@@) 5152 - عمر بن مدرك النخعي، مولاهم كوفي " ق ".(@)(@@) 5153 - عمر بن مرداس، مر في زياد بن المنذر " تعق " أقول: يظهر من المفيد في تلك الترجمة أنه من أصحاب الأصول المدونة والكتب المشهورة حيث ذكره في عدادهم.(@)(@@) 5154 - عمر بن مزيد الجعفي الكوفي، أسند عنه " ق " وعن نسخة عمرو.(@)(@@) 5155 - عمر بن مسكين بن عبد الله العدوي الحنظلي الكوفي، مات سنة خمس وسبعين ومائة، وله سبع وسبعون سنة " ق " وهو في السابقة أيضا.(@)(@@) 5156 - عمر بن مسلم الصائغ الكوفي " ق ".(@)(@@) 5157 - عمر بن مسلم القسري أو القشيري، مولاهم كوفي " ق ".(@)(@@) 5158 - عمر بن مسلم الهراء كوفي " ق ".(@)(@@) 5159 - عمر بن معروف العبيسي الكوفي، أسند عنه " ق " وفي نسخة أصح العبسي بدون الياء لما يظهر في الألقاب النسبية من كون عبس أبا قبيلة لا عبيس.(@)(@@) 5160 - عمر بن معمر الكوفي " ق ".(@)(@@) 5161 - عمر بن منهال، له كتاب، عنه عبيد الله بن الحسن " ست " تقدم عن " جش " عمرو توثيقه، وفي " مشكا " ابن منهال عنه عبد الله بن الحسين.(@)(@@) 5162 - عمر بن نهيك الكوفي " ق ".(@)(@@) 5163 - عمر والد 
urn:cts:arabLit:1313Barujirdi.Taraif.Shia002970Vols-ara1:ms407# يحيى بن عمر الكوفي " ق ".(@)(@@) 5164 - عمر بن هارون البلخي أبو حفص، أسند عنه، قدم كوفة " ق ".(@)(@@) 5165 - عمر بن يحيى زاذان مولى " ق ".(@)(@@) 5166 - عمر بن يزيد بياع السابري كوفي " ق " مولى ثقيف " كش " ثقة، له كتاب " ست " عنه ابنه الحسين في الثاني وزاد عليه في " مشكا " ابن عذافر، وعلي الصيرفي، ومحمد بن يونس، وابن عطية، والحسن بن السري، وربعي، وابن أذينة، والبرقي محمد، وهشام، ودرست، وحماد، وابن أبي عمير، وصفوان، وجعفر، وأبان، وابن محبوب. PageV01P548(@)(@@) 5167 - عمر بن يزيد الثقفي، مولاهم البزاز الكوفي " ق " واستظهر الميرزا أنه بياع السابري المتقدم.(@)(@@) 5168 - عمر بن يزيد بن ذبيان الصيقل، أبو موسى مولى بني نهد، روى عن " ق " عليه السلام له كتاب، عنه ابن أبي عمير، وفي " تعق " استظهر من " صه " و " جش " مما مر منهما في أحمد بن الحسين بن عمر بن يزيد اتحاده مع السابري وعن هنا التعدد لذكرهما في عنوانين واختلاف الراوي، وهو الاظهر لاختلاف الكنية أيضا.(@)(@@) 5169 - عمر اليماني وقيل الرماني أبو حفص، له كتاب، عنه عبيس " ست " تقدم على الثاني، وفي " مشكا " اليماني والرماني عنه عبيس. أقول: وهو من مضى في عمر أبي حفص الرماني.(@)(@@) 5170 - عمران بن إسحاق الزعفراني الكوفي " ق ".(@)(@@) 5171 - عمران بن إسحاق بن طلحة الكوفي " ق ".(@)(@@) 5172 - عمران بن البختري الكوفي " ق ".(@)(@@) 5173 - عمران البرقي الخبابي أبو علي جد محمد بن أبي القاسم عبد الله بن عمران، قليل الحديث، له كتاب، عنه محمد بن أبي القاسم " جش ".(@)(@@) 5174 - عمران بياع الزطي كوفي " ق ".(@)(@@) 5175 - عمران بن حمران الأذرعي روى عن " ق " و " ظم " عليهما السلام عنه الحسن بن حماد بن عديس، له كتاب عنه ابن سماعة.(@)(@@) 5176 - عمران بن زائدة بن نشيط أو شيكلة الأسدي الوابسي الكوفي " ق " وقال " هب " عنه ابن المبارك وأبو نعيم، وقد نقل توثيقة.(@)(@@) 5177 - عمران الزعفراني مجهول " صه " يحتمل كونه ابن إسحاق المتقدم أو ابن عبد الرحيم الآتي.(@)(@@) 5178 - عمران بن السقاء الكوفي " ق ".(@)(@@) 5179 - عمران بن سليمان أبو محمد القمي الكوفي " ق ". PageV01P549(@)(@@) 5180 - عمران بن شفا الأصبحي كوفي " ق " روى عن " ق " عنه علي 
urn:cts:arabLit:1313Barujirdi.Taraif.Shia002970Vols-ara1:ms408# بن الحسن الطاطري " جش ".(@)(@@) 5181 - عمران بن عبد الرحيم الزعفراني " ق ".(@)(@@) 5182 - عمران بن عبد الله القمي، وفيه أحاديث مستفيضة تدل على وثاقته وعظم خطره وجلالته عند " ق " عليه السلام الا أنها غير نقية السند، فالتوقف فيه أسلم، ولا وجه لجعلها من المرجحات أيضا كما اختاره.(@)(@@) 5183 - عمران بن عطية أبو عباد الكوفي.(@)(@@) 5184 - عمران بن عطية أبو عمارة الخارفي الكوفي " ق ".(@)(@@) 5185 - عمران بن علي بن أبي شعبة الحلبي الكوفي " ق " أبو الفضل، ثقة لا يطعن عليه " صه " تقدم توثيقه مع اخوانه في عنوان عبيد الله، وفي " مشكا " ابن علي الحلبي الثقة، عنه حمادان، ويحيى الحلبي، وثعلبة بن ميمون.(@)(@@) 5186 - عمران بن فائد الجمال الكوفي " ق ".(@)(@@) 5187 - عمران بن قطر الكوفي " ق ".(@)(@@) 5188 - عمران بن قطن، روى عن " ق " عليه السلام كتابه " جش ".(@)(@@) 5189 - عمران بن موسى الزيتوني قمي ثقة " صه " " جش " أحمد بن محمد عن أبيه عنه بكتابه " جش " وفي " مشكا " ابن موسى الثقة أحمد بن محمد عن أبيه، ومحمد بن أحمد بن يحيى عنه. أقول: وهو في السابقة أيضا.(@)(@@) 5190 - عمران بن نافع الكوفي " ق ".(@)(@@) 5191 - عمران بن يزيد الملائي الكوفي " ق ".(@)(@@) 5192 - عمران بن يعقوب البارقي الكوفي " ق ".(@)(@@) 5193 - عمير بن سويد العبدي الكوفي " ق ".(@)(@@) 5194 - عمير بن صالح الخثعمي الكوفي " ق ".(@)(@@) 5195 - عمير بن عمار الجعفي كوفي " ق ".(@)(@@) 5196 - عمير بن عمران الهذلي، مولاهم كوفي " ق ". PageV01P550(@)(@@) 5197 - عنبسة بن الأزهر الكوفي " ق ".(@)(@@) 5198 - عنبسة بن بجاد العابد " ق " " كش " عن حمدوية قال: سمعت أشياخي يقولون: انه كان خيرا فاضلا و " جش " كان قاضيا ثقة، روى عن " ق " عليه السلام له كتاب، عنه عبد الرحمن بن أبي هاشم، وصفوان.(@)(@@) 5199 - عنبسة بن خالد الأسدي الكوفي " ق ".(@)(@@) 5200 - عنبسة بن سعيد البصري أخو أبي الربيع السمان " ق ".(@)(@@) 5201 - عنبسة بن عبد الرحمن القرشي كوفي " ق ".(@)(@@) 5202 - عنبسة بن مصعب " قر " العجلي الكوفي، قال " كش " قال حمدوية:(@)(@@) عنبسة بن مصعب ناووسي واقفي على أبي عبد الله عليه السلام، وانما سميت الناووسية برئيس لهم يقال له: فلان بن فلان الناووس " صه " وهو في التالية كما يأتي.(@)(@@) 5203 - العوام بن حوشب بن يزيد 
urn:cts:arabLit:1313Barujirdi.Taraif.Shia002970Vols-ara1:ms409# بن رويم الشيباني، هو أكبر من أخيه طلاب روى عن الصادق عليه السلام، له كتاب عنه أخوه وفي " د " أديم بدل رويم وقيل: هو ممدوح. وهو غير معلوم.(@)(@@) 5204 - العوام بن عبد الرحمن الجرمي " ق " كوفي أسند عنه " ق ".(@)(@@) 5205 - عوانة بن عاصم الأنصاري " ق ".(@)(@@) 5206 - عوف بن عبد الله، روى عنه سعيد بن جناح مجهول، ويحتمل كونه الأزدي الآتي.(@)(@@) 5207 - عروف بن عبد الله الأزدي كوفي " ق ".(@)(@@) 5208 - عوف بن عمر الأزدي " ق ".(@)(@@) 5209 - عوف مولى عبد الرحيم بن نصر البارقي " ق ".(@)(@@) 5210 - عون بن حكيم البارقي الكوفي " ق ".(@)(@@) 5211 - عون بن عباد الطائي السنبسي كوفي " ق ".(@)(@@) 5212 - عون بن لفافة الكوفي " ق ".(@)(@@) 5213 - عون بن معين القلانسي الكوفي " ق ". PageV01P551(@)(@@) 5214 - عياش الدارمي أو الدارمي بصري " ق ".(@)(@@) 5215 - عياض بن عاصم الحنفي الكوفي " ق ".(@)(@@) 5216 - عياض بن عبد الرحمن الكلبي الكوفي " ق ".(@)(@@) 5217 - عيسى بن إبراهيم العبدي، أبو إسحاق الكوفي " ق ".(@)(@@) 5218 - عيسى أبو بكر بن عبد الله بن سعد الأشعري القمي وأخواه موسى وشعيب روى عنهما " ق " وفي " تعق " يأتي في ابن عبد الله تفصيل حاله في الجملة.(@)(@@) 5219 - عيسى أبو الفرج السندي " ق " وعن نسخة ابن الفرج.(@)(@@) 5220 - عيسى أبو موسى البصري " ق ".(@)(@@) 5221 - عيسى بن أبي مجر " ق ".(@)(@@) 5222 - عيسى بن أبي منصور صبيح العزرمي عربي صليب ثقة، روى عن الصادق عليه السلام، وقد ورد فيه روايات حسنة تدل على جلالته، الا أن الكلام أنه هو المعروف بشلقان أو مختلف، لا مجال لهذا البيان.(@)(@@) 5223 - عيسى بن أحمد المدائني الثقفي " ق " " جش " " د " ويأتي عن غيره ابن حمزة.(@)(@@) 5224 - عيسى بن أسامة الكوفي، روى عنه عبد الله بن المغيرة " ق ".(@)(@@) 5225 - عيس بن أعين الجريري الأسدي، مولى كوفي ثقة، روى عن " ق " عليه السلام، وعن عبيد بن عيسى بن أعين صاحب السبوب، وهي الثياب البيض من القز، له كتاب، عنه ابن جبلة، ومحمد بن سماعة، وفي " تعق " يروي عنه صفوان وابن أبي عمير، وفي " مشكا " ابن أعين الجريري الثقة، عنه عبد الله والحسن. ولا يخفى أنه في السابقة أيضا.(@)(@@) 5226 - عيسى بن حسان، روى عنه علي بن النعمان " ق 
urn:cts:arabLit:1313Barujirdi.Taraif.Shia002970Vols-ara1:ms410# ".(@)(@@) 5227 - عيسى بن حماد الخليدي البكري الكوفي " ق ".(@)(@@) 5228 - عيسى بن حمزة " قر " " ق " ابن حمزة المدائني، روى عن الصادق عليه السلام، له كتاب، عنه عمرو بن سعيد " جش ". PageV01P552(@)(@@) 5229 - عيسى بن حميد الشاكري الكوفي " ق ".(@)(@@) 5230 - عيسى بن حيان الكوفي، أبو أحمد النخعي مولاهم " ق ".(@)(@@) 5231 - عيسى بن خليد الفراء الكوفي، أسند عنه " ق ".(@)(@@) 5232 - عيسى بن راشد يعرف بابن كازر كوفي " ق " " جش " ثقة روى عن " ق " عليه السلام، له كتاب يرويه جماعة منهم محمد بن زياد عنه به، وفي " مشكا " ابن راشد الثقة، عنه محمد بن زياد، ووثقه في الوجيزة ولم يذكره في " صه " أصلا وذكره في " د " مهملا، وربما ضعف التوثيق لذلك، ولا يخلو من تأمل.(@)(@@) 5233 - عيسى بن راشد الكوفي " ق " أقول: استظهر في المنتهى بأنه المتقدم، وهو غير بعيد بل قريب، الا أن ذكره في " ق " مكررا يشعر بل يدل على التعدد، فتدبر.(@)(@@) 5234 - عيسى بن روضة حاجب المنصور، كان متكلما جيد الكلام، له كتاب في الإمامة " جش " وفي نسخة صاحب المنصور، ولعله أصح، وكلاهما يشعران بالذم كما لا يخفى.(@)(@@) 5235 - عيسى بن زيد بن علي بن الحسين بن علي بن أبي طالب عليهم السلام أبو يحيى عداده في الكوفيين، أسند عنه " ق ".(@)(@@) 5236 - عيسى بن السري أبو اليسع الكرخي، بغدادي مولى ثقة، روى عن " ق " عليه السلام، قمي نزل كرخ بغداد، والظاهر ايمانه، له كتاب، عنه جماعة منهم صفوان وابن نهيك ومحمد بن سلمة بن أرتبيل وفي " مشكا " ابن السري الثقة عنه محمد بن سلمة، وابن نهيك.(@)(@@) 5237 - عيسى بن شبرة المدني " ق ".(@)(@@) 5238 - عيسى بن شلقان، غير مذكور في الكتب بهذا العنوان، وهو ابن أبي منصور، وعلى هذا يكون شلقان لقبا لأبي منصور صبيح لا لعيسى. والظاهر أنه لقب له لا لأبيه، كما يستفاد من " كش " وصريح بعض الأخبار وجملة من علمائنا الأخيار.(@)(@@) 5239 - عيسى بن صبيح، عربي صليب ثقة روى عن " ق " عليه السلام، ويظهر من " صه " مع ذكره على حدة تردده في اتحاده مع ابن أبي منصور المعروف PageV01P553(@)(@@) بشلقان. والظاهر الاتحاد لا التغائر 
urn:cts:arabLit:1313Barujirdi.Taraif.Shia002970Vols-ara1:ms411#، ومع ذلك لابد من الجولان في هذا الميدان كثيرا، عنه ابن محبوب كما في " مشكا ".(@)(@@) 5240 - عيسى بن الصلت كوفي " ق ".(@)(@@) 5241 - عيسى بن عبد الرحمن السلمي البجلي كوفي " ق ".(@)(@@) 5242 - عيسى بن عبد الله بن سعد بن مالك الأشعري، روى عن " ق " و " ظم " عليهما السلام، وكان وجها عند الصادق عليه السلام مختصا به، روى عنه أبان ومحمد بن الحسن بن أبي خالد وابن ابنه أحمد بن محمد عن أبيه عنه، فعلي هذا هو جد أحمد ووالد محمد كما في " ست ".(@)(@@) 5243 - عيسى بن عبد الله بن محمد بن عمر بن علي بن أبي طالب عليه السلام الهاشمي، له كتاب، عنه أبو سمينة، والنوفلي.(@)(@@) 5344 - عيسى بن عبد الله الوابشي الكوفي " ق ".(@)(@@) 5245 - عيسى بن عبد الله الهاشمي، له كتاب، عنه أحمد بن هلال. والظاهر أنه هو الهاشمي السابق الذي يروي عنه أبو سمينة، فتأمل.(@)(@@) 5246 - عيسى بن عمرو مولى الأنصار، روى عنه منصور بن حازم من أهل فارس، وقد كان خدم أبا عبد الله عليه السلام سنين، وهو في الطبقة الآتية.(@)(@@) 5247 - عيسى بن عمر الأسدي الكوفي ينزل همدان، أسند عنه " ق ".(@)(@@) 5248 - عيسى بن الفرج " ق " ولعله أحد الآتيين الا أنه ذكره الميرزا عاريا عن الوصفين، وهو دال على التغائر لا الاتحاد، فتأمل.(@)(@@) 5249 - عيسى بن الفرج السلولي، مولاهم كوفي أسند عنه " ق ".(@)(@@) 5250 - عيسى بن الفرج السندي " ق " وعن نسخة أبو الفرج ويأتي عن " ست " في الكنى يروي عنه أحمد بن رياح، وهو عن " ق " عليه السلام كما ذكره الميرزا.(@)(@@) 5251 - عيسى بن فضالة الليثي الكوفي " ق ".(@)(@@) 5252 - عيسى بن لقمان الزهري القرشي الكوفي " ق " كذا ذكره الميرزا، PageV01P554(@)(@@) وعن النقد والوجيزة بزيادة أسند عنه. وقال في المنتهى: ونسختان عندي من " جخ " كما نقل الميرزا فراجع. أقول: وبدون الزيادة أصح.(@)(@@) 5253 - عيسى بن ماهان أبو جعفر الرازي " ق " " د ".(@)(@@) 5254 - عيسى النهر تميزي (1) " ق " لم أجد غير العنوان.(@)(@@) 5255 - عيسى بن الوليد الهمداني، كوفي ثقة " د " " جش " له كتاب، عنه أحمد بن الفضل في الثاني، وفي " مشكا " ابن الوليد الهمداني الثقة، عنه أحمد 
urn:cts:arabLit:1313Barujirdi.Taraif.Shia002970Vols-ara1:ms412# بن الفضل.(@)(@@) 5256 - عيسى بن يونس " قي " " ظم " برزج، له كتاب " ظم " وهو في السابقة.(@)(@@) 5257 - عيص بن أبي شعبة، ذكره " كش ".(@)(@@) 5258 - عيص بن القاسم، ثقة عين روى عن " ق " عليه السلام و " ظم " عليه السلام، له كتاب عنه صفوان بن يحيى، وابن أبي عمير، وأخوه الربيع ابنا أخت سليمان بن خالد الاقطع، وفي " مشكا " ابن القاسم الثقة، عنه صفوان، وابن أبي عمير، والحكم بن مسكين، وعبد الله بن المغيرة، وابن أبي نجران.(@)(@@) 5259 - عيينة بن ميمون البجلي، مولاهم القصباني كوفي " ق " تقدم عن " صه " و " جش " عتبة بالتاء المثناة، والتعدد محتمل بالاخوة، وإن كان الاظهر الاتحاد.(@)(@@) 5260 - غالب بن سهل الكلبي الكوفي " ق ".(@)(@@) 5261 - غالب بن عبد الله، أبو عاصم الكوفي " ق ".(@)(@@) 5262 - غالب بن عبيد الله العقيلي الجريزي، أسند عنه " ق ".(@)(@@) 5263 - غالب بن عثمان، روى عنه الحسن بن علي بن فضال، مولى كوفي سمال - يعني: كحال - واقفي، روى عن " ق " عليه السلام ثقة، له كتاب يرويه جماعة، وفي " جش " غالب بن عثمان المنقري مولى كوفي سمال بمعنى كحال، وقيل: إنه مولى آل أعين روى عن " ق " ثقة له كتاب يرويه جماعة.(@)(@@) PageV01P555(@)(@@) 5264 - غالب بن عثمان الهمداني الشاعر، كان زيديا روى عن " ق " عليه السلام المشاعري، له أحاديث مجموعة، مات سنة ست وستين ومائة، وله ثمان وسبعون سنة، وفي " ق " أسند عنه يكنى أبا سلمة.(@)(@@) 5265 - غالب بن الهذيل أبو الهذيل الشاعر الأسدي، مولاهم كوفي " ق " وفي " قب " كوفي صدوق رمي بالرفض من الخامسة.(@)(@@) 5266 - غريز بن مقاتل المدني، مولى بني هاشم " ق ".(@)(@@) 5267 - غريف بن الوضاح الجعفي الكوفي " ق ".(@)(@@) 5268 - غسان البصري، عنه صفوان بن يحيى عن ابن مسكان " تعق " أقول: لم أجده في كتب الرجال، الا ان رواية ابن يحيى عنه امارة المدح بل الوثاقة، فتأمل.(@)(@@) 5269 - غسان بن غيلان الأسدي " ق ".(@)(@@) 5270 - غسان بن مالك بن أعين " ق ".(@)(@@) 5271 - غورك بن أبي الحصرم أبو عبد الله الحضرمي الكوفي، أسند عنه " ق " روى عن الصادق عليه السلام.(@)(@@) 5272 - غورك بن أبي الخضر الكوفي الخزاز " ق " وفي بعض نسخه ابن أبي الحصرم أبو 
urn:cts:arabLit:1313Barujirdi.Taraif.Shia002970Vols-ara1:ms413# عبد الله الحضرمي الكوفي أسند عنه، وفي القاموس ابن الحصرم روى عن " ق " عليه السلام.(@)(@@) 5273 - غورك بن راشد التغلبي كوفي " ق ".(@)(@@) 5274 - غياث بن إبراهيم بتري " قر " أبو محمد، أسند عنه، تميمي أسدي بصري، سكن الكوفة، ثقة، روى عن " ق " و " ظم " عليهما السلام له كتاب يرويه جماعة منهم إسماعيل بن ابان، ومحمد بن يحيى الخزاز، والحسن بن علي اللؤلؤي، وزيدان بن عمرو.(@)(@@) 5275 - غيلان بن جامع المحاربي، أبو عبد الله الكوفي " ق ".(@)(@@) 5276 - غيلان بن عثمان المزني أبو سلمة الكوفي " ق ". PageV01P556(@)(@@) 5277 - فائد الجمال الكوفي، روى عنهما " ق " وهو في التالية.(@)(@@) 5278 - فائد الحناط كوفي " ق " " جش " قال ابن فضال: روى عن " ق " و " ظم " عليهما السلام له كتاب يرويه عثمان بن عيسى في الثاني.(@)(@@) 5279 - فائد الخثعمي الكوفي " ق ".(@)(@@) 5280 - فرقد الحجام الكوفي " ق " احتمل الميرزا كونه أبا داود بن فرقد.(@)(@@) 5281 - فضال بن المنذر الكوفي " ق ".(@)(@@) 5282 - فضال بن المهنا الطائي كوفي " ق ".(@)(@@) 5283 - فضال بن الأسود الجهني كوفي " ق ".(@)(@@) 5284 - الفضل أبو الربيع النميري الكوفي " ق ".(@)(@@) 5285 - الفضل بن أبي قرة التفليسي السمندي بلد من آذربايجان انتقل إلى أرمنية، روى عن الصادق عليه السلام، ضعيف، له كتاب، عنه شريف بن سابق، وإبراهيم بن سليمان، ولعله في السابقة أيضا.(@)(@@) 5286 - الفضل بن الربيع " ق " " د ".(@)(@@) 5287 - الفضل بن سليمان الكاتب البغدادي، كان كاتبا للمنصور والمهدي على ديوان الخراج، روى عن " ق " و " ظم " عليهما السلام وصنف كتاب يوم وليلة، عنه محمد بن موسى المدائني " جش ".(@)(@@) 5288 - الفضل بن سليمان المدائني " ق ".(@)(@@) 5289 - الفضل بن عبد الملك أبو العباس البقباق كوفي " ق " مولى كوفي ثقة، روى عن " ق " عليه السلام له كتاب، عنه ابن داود بن الحصين، وحريز، وأبان، وحماد، وعبد الله، وابن أذينة، وفي " كش " قال عبيد: دخلت على الصادق عليه السلام وعنده البقباق، فقلت: رجل أحب بني أمية أهو معهم؟ قال: نعم، قلت: رجل أحبكم أهو معكم؟ قال: نعم، قلت: وان زنا وان سرق قال: فنظر إلى البقباق فوجد منه غفلة أومى برأسه نعم. فتأمل.(@)(@@) 5290 - الفضل بن عثمان المرادي أبو محمد الصائغ 
urn:cts:arabLit:1313Barujirdi.Taraif.Shia002970Vols-ara1:ms414# الأعور، ثقة ثقة، روى PageV01P557(@)(@@) عن الصادق عليه السلام وهو ابن الأكراد، له كتاب، عنه محمد بن أبي عمير وصفوان، وفضالة، ويوسف، وطلحة ويقال: الفضيل، ويأتي عن " ست " فضل الأعور.(@)(@@) 5291 - الفضل بن عذراء الصيرفي الكوفي " ق ".(@)(@@) 5292 - الفضل بن عطاء العجلي الكوفي " ق ".(@)(@@) 5293 - الفضل بن العلاء البجلي البصري، أصله كوفي، أسند عنه " ق ".(@)(@@) 5294 - الفضل بن عمارة الأزدي الكوفي " ق ".(@)(@@) 5295 - الفضل بن عيسى الهاشمي " ق ".(@)(@@) 5296 - الفضل بن غزوان الضبي مولاهم أبو علي كوفي " ق " وفي " تعق " أخذ معرفا لأخيه كما مر، وفيه دلالة على معروفيته بل وجلالته، ومر عن " جش " أنه فضيل وهو الظاهر، ويروي عنه ابن أبي عمير في الصحيح هذا وسعيد كما مر أسدي وهذا ضبي، فتأمل.(@)(@@) 5297 - الفضل بن كثير بغدادي " ق ".(@)(@@) 5298 - الفضل بن المختار البصري " ق ".(@)(@@) 5299 - الفضل مولى محمد بن راشد " ق " لكن الذي في " قي " ابن محمد بن راشد مولى " د " قوله الفضل البقباق أبو العباس كوفي له كتاب ثقة اسم برأسه وان توهم العلامة في " صه " كما يأتي اتحاد الترجمتين وقد تبعه في الوجيزة.(@)(@@) 5300 - الفضل بن يونس الكاتب البغدادي، روى عن موسى عليه السلام، ثقة كوفي تحول إلى بغداد، واقفي، روى عنه الحسن بن محبوب، وفي " تعق " الحكم بوقفه لا يخلو عن شئ، وان جزم به في المعتبر، وفي " مشكا " ابن يونس الواقفي عنه الحسن بن محبوب. أقول: ولا يخفى كونه في السابقة أيضا.(@)(@@) 5301 - الفضيل الأعور، له كتاب عنه علي بن عبد العزيز " ست " وهو ابن عثمان كما يأتي، وتقدم أنه يقال له الفضل مكبرا.(@)(@@) 5302 - الفضيل بن الزبير الأسدي، مولاهم كوفي الرسان " ق " وفي " قي " أخو عبد الله بن الزبير، وعن نسخة مكبرا، واحتمال التغاير متطرق، فتأمل، وما في PageV01P558(@)(@@) " كش " مر في أخيه عبد الله.(@)(@@) 5303 - الفضيل بن سعد الجعفي، مولاهم كوفي " ق ".(@)(@@) 5304 - الفضيل بن سكرة كوفي " ق " وفي " قي " فضيل سكرة كوفي، وفي كتاب سعد أبو محمد " د " في " تعق " روى عنه ابن أبي نصر، ويظهر من أخباره حسن حاله، وفي أبي كهمس ما يشير إليه وأنه فضيل 
urn:cts:arabLit:1313Barujirdi.Taraif.Shia002970Vols-ara1:ms415# سكرة بدون ابن. أقول: واسقاطه أحرى.(@)(@@) 5305 - الفضيل بن سويد الأسدي كوفي " ق ".(@)(@@) 5306 - الفضيل بن عامر المزني كوفي " ق ".(@)(@@) 5307 - الفضيل بن عبيد الله الأنصاري " ق ".(@)(@@) 5308 - الفضيل بن عثمان الأعور المرادي الكوفي " قر " ابن عثمان المرادي ويقال الفضل الأعور السابق الأنباري ابن أخت علي بن ميمون " ق " تقدم توثيقه في فضل، وعن " ست " فضيل مصغرا، وفي " تعق " يروي عنه صفوان بلا واسطة، وفي " مشكا " ابن عثمان الأعور عنه علي بن عبد العزيز، وصفوان.(@)(@@) 5309 - الفضيل بن عثمان الصيرفي، له كتاب، عنه الحسن بن محمد بن سماعة " ست " قال الميرزا: وأظن أنهما واحد وهو فضيل الأعور ولم أتحققه، في " مشكا " قد جاء في كتب الرجال فضيل بن عثمان الصيرفي، يروي عنه الحسن بن محمد بن سماعه، ولا يبعد في الاتحاد يعني مع الأعور. أقول: وفيه تأمل.(@)(@@) 5310 - الفضيل بن عياض بصري ثقة عامي، روى عن الصادق عليه السلام " صه " " جش " وزاد: سليمان بن داود عنه بكتابه، وفي " ق " ابن عياض بن مسعود التميمي الزاهد الكوفي، وعن " قب " بعد الزاهد أصله من خراسان سكن مكة عابد امام من الثامنة، مات سنة تسع وثمانين ومائة، وهو في السابقة بملاحظة التاريخ.(@)(@@) 5311 - الفضيل بن غزوان الضبي مولاهم، أبو الفضل الكوفي، ثقة من كبار السابعة، مات سنة أربعين ومائة " قب " وتقدم عن " ق " مكبرا والظاهر أنه أصح.(@)(@@) 5312 - الفضيل بن فضالة التغلبي كوفي " ق ". PageV01P559(@)(@@) 5313 - الفضيل بن محمد بن راشد، مولى الفضل البقباق أبو العباس، كوفي له كتاب ثقة " قي " عنه " صه " واستظهر الميرزا أن الفضل البقباق اسم على حدة، وتقدم الفضل مولى محمد بن راشد عن " ق " فليتأمل انتهى.(@)(@@) 5314 - الفضيل بن مرزوق العنزي الكوفي " ق ".(@)(@@) 5315 - قطر بن خليفة أبو بكر المخزومي، تابعي روى عنهما " ق " وهو في التالية، عنه يحيى بن آدم، والقطان، ثقة شيعي، مات سنة ثلاث وخمسين ومائة " هب ".(@)(@@) 5316 - فليح بن سليمان أبو يحيى المدني كوفي " ق ".(@)(@@) 5317 - فليح بن محمد بن المنذر بن الزبير بن العوام القرشي المدني " ق ".(@)(@@) 5318 - قهبان بن عابس اليشكري " ق ".(@)(@@) 5319 - فهير أبو الأسود أو ابنه 
urn:cts:arabLit:1313Barujirdi.Taraif.Shia002970Vols-ara1:ms416# مولى الغنويين كوفي " ق ".(@)(@@) 5320 - فيروز بن كعب الأزدي كوفي " ق ".(@)(@@) 5321 - الفيض بن عبد الحميد الهمداني، مولاهم كوفي " ق ".(@)(@@) 5322 - الفيض بن مطر العجلي، مولاهم أنماطي كوفي " ق ".(@)(@@) 5323 - القاسم بن إبراهيم، وكأنه هو البرسي الآتي.(@)(@@) 5324 - القاسم بن أرقم العنزي الكوفي " ق " ابن أرقم، روى عنه يوسف بن يعقوب " قي ".(@)(@@) 5325 - القاسم بن إسحاق بن عبد الله بن جعفر بن أبي طالب المدني الهاشمي، أسند عنه " ق " ولعله في التالية أيضا.(@)(@@) 5326 - القاسم الأسدي " ق ".(@)(@@) 5327 - القاسم الرسي بن إبراهيم طباطبا بن إسماعيل بن إبراهيم بن الحسن بن الحسن بن علي بن أبي طالب عليه السلام، عنه أحمد بن المغلس الحماني، له كتاب، رواه عن " ق " و " ظم " عليهما السلام.(@)(@@) 5328 - القاسم بن بريد بن معاوية العجلي " ق " " ظم " عليهما السلام " جش " ثقة روى عن " ق " عليه السلام في الثالث و " صه " له كتاب عنه فضالة بن PageV01P560(@)(@@) أيوب، وفي " مشكا " زاد الحسن بن محبوب مع توصيفه بالثقة.(@)(@@) 5329 - القاسم بن بهرام أبو همدان قاضي هيت " ق ".(@)(@@) 5330 - القاسم الخزاز كما في " يب " و " د " والخزاز كما في الأمالي والعيون مولى منصور، وكان خزاما، روى عنه إبراهيم بن هاشم، وهو عن عبد الرحمن بن كثير، فهو ابن يحيى بن الحسنة الآتي لهذا الوصف ولما ذكره " ق " في ثبت رجاله أن إبراهيم بن هاشم يروي عنه " تعق ".(@)(@@) 5331 - القاسم بن خليفة، كوفي ثقة قليل الحديث " صه " وزاد " جش " عنه يحيى بن زكريا اللؤلؤي، وفي " مشكا " ابن خليفة الكوفي الثقة، عنه يحيى بن زكريا اللؤلؤي. أقول: ولعله في السابقة كما لا يخفى.(@)(@@) 5332 - القاسم بن الذيال الهمداني المشرقي كوفي " ق ".(@)(@@) 5333 - القاسم بن سالم أبو خالد بياع السابري الكوفي " ق ".(@)(@@) 5334 - القاسم بن سليمان بغدادي " جش " له كتاب، رواه النضر بن سويد " ست " " جش " وفي " تعق " للصدوق طريق إليه، وهو يشير إلى اعتماد عليه، مضافا إلى أن نضرا صحيح الحديث، وفي " مشكا " ابن سليمان عنه النضر بن سويد.(@)(@@) 5335 - القاسم بن سليمان كوفي " ق " احتمل الميرزا اتحاده مع السابق بل وفي سابقتها بناءا على الاتحاد، وقد أشرنا 
urn:cts:arabLit:1313Barujirdi.Taraif.Shia002970Vols-ara1:ms417# إليه في القاسم بن الحسن من احتمال اتحاده معه، فتأمل.(@)(@@) 5336 - القاسم بن سويد الجعفي، مولاهم الكوفي " ق ".(@)(@@) 5337 - القاسم الشعراني اليقطيني يرمى بالغلو " دي " " صه " يدعى أنه باب وأنه نبي في الثاني، ورواه " كش " وهو في السابقة بل وفي سابقتها بناءا على الاتحاد، وقد أشرنا إليه في القاسم بن الحسن من احتمال اتحاده معه، فتأمل.(@)(@@) 5338 - القاسم الشيباني " ق ".(@)(@@) 5339 - القاسم بن عبد الرحمن الخثعمي الكوفي " ق ".(@)(@@) 5340 - القاسم بن عبد الرحمن الصيرفي شريك مفضل بن عمر كوفي " ق " PageV01P561(@)(@@) قيل: وقد كان رجلا صدوق الحديث، وفي النقد رجل صدوق، وجرم الفاضل " ع ب " بوثاقته، وفي الوجيزة بحسنه، وفي " تعق " نفى البعد عن وثاقته، سيما بملاحظة رواية ابن أبي عمير عنه.(@)(@@) 5341 - القاسم بن عبد الرحمن المقري " ق ".(@)(@@) 5342 - القاسم بن عبد الله الخضرمي كوفي " ق ".(@)(@@) 5343 - القاسم بن عبد الله بن عمر بن حفص بن عاصم بن عمر بن الخطاب القرشي المدني، أسند عنه " ق ".(@)(@@) 5344 - القاسم بن عروة أبو محمد مولى أبي أيوب الجوزي بغدادي وبها مات، روى عن الصادق عليه السلام، وكان أبو أيوب من موالي المنصور ووزرائه، له كتاب، عنه أبناء نهيك وسعيد والبرقي محمد.(@)(@@) 5345 - القاسم بن الفضيل، مولى بني سعد كوفي " ق ".(@)(@@) 5346 - القاسم بن الفضيل بن يسار البصري " ق " النهدي البصري أبو محمد، ثقة روى عن " ق " عليه السلام " صه " " جش " له كتاب، عنه فضالة بن أيوب في الثاني، وفي " مشكا " ابن الفضيل بن يسار الثقة، عنه فضالة، وأبو طالب عبد الله بن الصلت.(@)(@@) 5347 - القاسم بن محمد بن علي بن إبراهيم بن محمد الهمداني وكيل الناحية " صه " " جش " مع أبيه كما يأتي.(@)(@@) 5348 - القاسم بن معن بن عبد الرحمن بن عبد الله بن مسعود المسعودي، كوفي أسند عنه " ق ".(@)(@@) 5349 - القاسم بن موكب " ق ".(@)(@@) 5350 - القاسم بن الوليد القرشي العماري الكوفي، روى عن " ق " عليه السلام، له كتاب، رواه علي بن الحسين بن رباط وغيره.(@)(@@) 5351 - القاسم اليقطيني، وهو الشعراني المتقدم، وانما ذكرناه مع القاسم الشعراني هنا أيضا لاحتمال التغاير مع المذكور فيما سبق، ولذا ذكرناه هناك أيضا 
urn:cts:arabLit:1313Barujirdi.Taraif.Shia002970Vols-ara1:ms418#، PageV01P562(@)(@@) فتدبر.(@)(@@) 5352 - قتيبة الأعشى " ست " " لم " ابن محمد الأعشى أبو محمد الكوفي " ق " المؤدب مولى الأزدي، ثقة عين، روى عن الصادق عليه السلام، له كتاب عنه أحمد بن بشير، والقاسم بن إسماعيل، وفي " تعق " مر كلام المفيد في زياد المنذر، وفي الروضة ما يدل على جلالته.(@)(@@) 5353 - قثم بن كعب الجعفري كوفي " ق ".(@)(@@) 5354 - قدامة بن حنيفة " ق ".(@)(@@) 5355 - قدامة بن زائدة الثقفي الكوفي، أسند عنه " ق ".(@)(@@) 5356 - قدامة بن سعيد الحنفي، مولاهم كوفي " ق ".(@)(@@) 5357 - قدامة بن سعيد الكوفي " ق " وعن نسخة ابن سعد.(@)(@@) 5358 - قدامة بن عاصم الأزدي الكوفي " ق ".(@)(@@) 5359 - قدامه بن فرقد السلمي الكوفي " ق ".(@)(@@) 5360 - قدامة بن موسى الكوفي " ق ".(@)(@@) 5361 - قدامة بن يزيد الجعفي بياع الحبر كوفي " ق ".(@)(@@) 5362 - قرض بن حفص الكوفي " ق ".(@)(@@) 5363 - قفاث الكوفي " ق ".(@)(@@) 5364 - قيس أبو إسماعيل " ق " وعن الكافي في باب الصمت في الصحيح عن إبراهيم بن عبد الحميد عن قيس أبي إسماعيل وذكر أنه لا بأس به من أصحابنا.(@)(@@) 5365 - قيس بن أبي مسلم الأشعري الكوفي وأمه رمانة الأشعري، يكنى أبا الفضل " د " " ق ".(@)(@@) 5366 - قيس أخو عمار وصباح كلهم ثقات، وفي " تعق " ربما تشعر عبارة " صه " إلى عدم فطحيته، ويؤيده كلام " شه " في أخيه صباح، نعم قول " جش " في عمار ثقات في الرواية يوهم ذلك، وكذا حكاية بقاء طائفة عمار على الفطحية.(@)(@@) 5367 - قيس بن زرارة، مولى كندة كوفي " ق ". PageV01P563(@)(@@) 5368 - قيس بن زيد الأسدي، مولاهم كوفي " ق ".(@)(@@) 5369 - قيس بن عبادة الأزدي الكوفي " ق ".(@)(@@) 5370 - قيس العبدي الكوفي " ق ".(@)(@@) 5371 - قيس بن عمار بن حيان قريب الامر " صه " " د " وفي " تعق " ربما يظهر من " جش " في أخيه إسحاق كونه اماميا. أقول: وقد مضى في أخيه ما يمكن أن يلاحظ، وهذا غير ابن موسى الساباطي، كما أشرنا إليه في أخيه.(@)(@@) 5372 - قيس بن عمارة الأزدي الغامدي أبو عمارة كوفي " ق ".(@)(@@) 5373 - قيس بن كعب التمار الكوفي " ق ".(@)(@@) 5374 - قيس بن محمد بن حيان الهمداني " ق ".(@)(@@) 5375 - قيس بن موسى الساباطي، مر بعنوان أخو عمار " تعق " أقول: قد مر أنه ثقة فطحي، وقد أشرنا أنه غير ابن حيان.(@)(@@) 5376 - قيس بن مهاجر 
urn:cts:arabLit:1313Barujirdi.Taraif.Shia002970Vols-ara1:ms419# المزني كوفي " ق ".(@)(@@) 5377 - قيس ويونس ويوسف بنو يعقوب بن قيس البجلي الدهني الكوفي مولى " ق ".(@)(@@) 5378 - كامل بن سوادة المرهبي، مولاهم كوفي " ق ".(@)(@@) 5379 - كثير بن الأسود الجملي المرادي الكوفي " ق ".(@)(@@) 5380 - كثير بن الأسود السلمي كوفي " ق ".(@)(@@) 5381 - كثير بن جعفر بن أبي كثير المدني، أسند عنه " ق ".(@)(@@) 5382 - كثير بن طارق أبو طارق القنبري، من ولد قنبر مولى أمير المؤمنين عليه السلام، روى عن زيد وغيره، له كتاب، عنه محمد بن زكريا المالكي، وكأنه في التالية أيضا، ويأتي.(@)(@@) 5383 - كثير بن العياش بالشين المعجمة ضعيف، وخرج أيام أبي السرايا معه فأصابه جراحة وكان قطانا " صه " ونحوه " د " وفي " ست " وكان ضعيفا وخرج أيام أبي السرايا معه فأصابته جراحة، الا أنه في ترجمة زياد بن المنذر يروي عنه جعفر بن PageV01P564(@)(@@) محمد المحمدي، ومحمد بن إبراهيم القطان وهو عن زياد.(@)(@@) 5384 - كثير بن قاروند أبو إسماعيل النوا الكوفي " ق " ابن كاروند " د " هو المعروف بكثير النوا، فيرد حديثه فقاهة واجتهادا، ويأتي بعنوان كثير النوا، وهو في التالية.(@)(@@) 5385 - كثير النوا بتري " قر " " كش " وهو عامي وفي حديث قال الصادق عليه السلام: اللهم إني إليك من كثير النوا برئ في الدنيا والآخرة، وروى عن محمد بن يحيى، قال قلت له: ما أكثر استخفافك لأبي جعفر عليه السلام قال: لاني سمعت منه شيئا لا أحبه أبدا، سمعت منه يقول: إن الأراضي السبع تفتح بمحمد وعترته.(@)(@@) 5386 - كرام، هو لقب عبد الكريم الخثعمي، وقد مر الا أن في الكافي أنه حلف أن يصوم حتى يقوم القائم ودخل على الصادق عليه السلام وأخبره بذلك، وفي ذلك دلالة على عدم وقفه. وفي " كش " و " جش " و " جخ " و " صه " و " مشكا " أنه واقفي، فالرواية مردودة الا انه ثقة.(@)(@@) 5387 - كردويه الهمداني، عنه ابن أبي عمير، وفي " صه " وجدت بخط " شه " الأول عن يحيى بن سعيد كردويه، وكردين اسمان لمسمع الا ان الميرزا تأمل في الاتحاد، ويظهر من العلامة في المختلف والصدوق في الفقيه التعدد، ولعله كذلك لتكرار الذكر وتغاير الوسائط، واختلاف الوسائط على ما قيل 
urn:cts:arabLit:1313Barujirdi.Taraif.Shia002970Vols-ara1:ms420#، فتأمل.(@)(@@) 5388 - كردين بن مسمع بن عبد الملك بن مسمع يكنى أبا سيار، له كتاب، عنه عبد الله بن عبد الرحمن الأصم " ست " قال الميرزا: هو مسمع كردين كما يأتي، فلفظة " ابن " زائدة، ولا يخلو من تأمل.(@)(@@) 5389 - كريم بن سعد البجلي الكوفي " ق ".(@)(@@) 5390 - كريم بن عامر الأزدي الكوفي " ق ".(@)(@@) 5391 - كعب بن أسود المدني كوفي " ق ".(@)(@@) 5392 - كعب بن سلامة بن زيد أبو عامر الأزدي كوفي " ق ".(@)(@@) 5393 - كعب مولى بني طرفة " ق " ابن عبد الله مولى طرفة، كوفي ثقة، روى PageV01P565(@)(@@) عن الصادق عليه السلام، ذكره أصحاب الرجال " صه " " جش " له كتاب، عنه جماعة منهم عباس بن عامر " جش ".(@)(@@) 5394 - الكلبي " كش " عامي، وقيل: مستور " د " وهو الحسين بن علوان الذي يروي عن الصادق عليه السلام كما تقدم.(@)(@@) 5395 - كلثوم بن زيد " ق ".(@)(@@) 5396 - كليب بن الأسود العامري الكوفي " ق ".(@)(@@) 5397 - كليب بن عبد الملك بن أبي عبيدة بن عبد الله بن مسعود الكوفي " ق ".(@)(@@) 5398 - كليب بن معاوية الأسدي الصيداوي، عربي كوفي، روى عن الصادق عليه السلام، له كتاب، عنه جماعة منهم صفوان، وابن أبي عمير، وعبد الرحمن بن أبي هاشم، وفيه حديث بل أكثر يدل على حسن حاله، وهو في التالية أيضا.(@)(@@) 5399 - كهيل بن عمارة الشبامي الكوفي " ق ".(@)(@@) 5400 - لبيب بن عبد الرحمن الشاكري كوفي " ق " وعن نسخة ليث، كما يأتي.(@)(@@) 5401 - لوط بن إسحاق الهاشمي المدني " ق ".(@)(@@) 5402 - لوط بن يحيى بن سعيد بن مخنف بن سلم الأزدي، يكنى أبا مخنف، شيخ من أصحاب الاخبار بالكوفة ووجههم، وكان يسكن إلى ما يرويه، روى عن الصادق عليه السلام وقيل: عن الباقر عليه السلام وفي " ست " صاحب " ي " و " ن " و " سن " عليهم السلام والظاهر أن أباه من أصحابه عليه السلام ولم يلقه هو، ولعله في الطبقات الأربعة ونشير إليه في طبقة " ن " وهذا هو أبو مخنف المعروف صاحب مقتل الحسين عليه السلام.(@)(@@) 5403 - ليث بن أبي سليم الأموي، مولاهم الكوفي " ق ".(@)(@@) 5404 - ليث بن عبد الرحمن الشاكري كوفي " ق " وعن نسخة أخرى لبيب وقد تقدم. PageV01P566(@)(@@) 5405 - ليث بن كيسان أبو يحيى العبدي البكري 
urn:cts:arabLit:1313Barujirdi.Taraif.Shia002970Vols-ara1:ms421#، أسند عنه " ق ".(@)(@@) 5406 - مازن القلانسي كوفي " ق ".(@)(@@) 5407 - مالك بن أنس، له كتاب، عنه ابن أبي عمير " ست " وفي " تعق " أنه من الأئمة الأربعة للعامة روى " ق " عنه أخبارا كثيرة يظهر منها انقطاعه إلى الصادق عليه السلام بخلاف أبي حنيفة، وقبره في البقيع عليه قبة، توفي في سنة تسع وسبعين بعد المائة، وأشهر بين أهل السنة أنه قد بقي في بطن أمه ثلاث سنة أو أقل بنصف.(@)(@@) 5408 - مالك بن أنس أو أبي أنس بن أبي عامر الأصبحي المدني " ق ".(@)(@@) 5409 - مالك بن خالد الأسدي الكوفي " ق ".(@)(@@) 5410 - مالك بن زياد بن ثور العنزي الكوفي " ق ".(@)(@@) 5411 - مالك بن عبادة الهمداني " ق ".(@)(@@) 5412 - مالك بن عطية " ين " " قر " " ست " ابن عطية الأحمسي البجلي الكوفي " ق " " جش " " صه " أبو الحسين ثقة، روى عن الصادق عليه السلام فيهما، له كتاب عنه جماعة منهم عبيس بن هشام في الثاني الحسن بن محبوب في " ست " وزاد في " مشكا " علي بن الحكم.(@)(@@) 5413 - مالك بن عيسى الأرحبي الكوفي " ق ".(@)(@@) 5414 - مالك بن الغداق الثمالي الكوفي " ق ".(@)(@@) 5415 - مؤمل بن زياد العقيلي الكوفي مولاهم " ق ".(@)(@@) 5416 - مبارك أبو أد ابن عبد الله مولى بني أسد كوفي " ق ".(@)(@@) 5417 - مبارك بن عبد الله الشيباني، مولاهم كوفي " ق ".(@)(@@) 5418 - مبارك مولى إسماعيل بن علي بن عبد الله بن عباس كوفي، 5419 - مبارك مولى صباح المدائني " ق ".(@)(@@) 5420 - مبشر بن العطاف الهمداني الكوفي " ق ".(@)(@@) 5421 - مبشر بن عمارة الأزدي الكوفي " ق ".(@)(@@) 5422 - المتوكل بن عمير بن المتوكل، روى عن ابن زيد بن علي دعاء PageV01P567(@)(@@) الصحيفة، وهو الذي يذكر في أوائل الصحيفة الكاملة، ولم أقف على وصفه الا أن " د " ذكره في الموثقين، وقال السيد الداماد: لا نص عليه من الأصحاب بالتوثيق، وسيجئ في التالية بعض أحواله، وفي " جش " و " د " ابن عمر ونسخها تكذبه.(@)(@@) 5423 - مثنى بن الحضرمي أو ابن الحضرمي، له كتاب عنه ابن أبي عمير، وكأنه ابن القاسم الآتي كما ذكره الميرزا، ويأتي عن " ق " وفي " مشكا " ابن الحضرمي عنه ابن أبي عمير.(@)(@@) 5424 - المثنى بن عبد السلام، له كتاب، عنه القاسم بن إسماعيل. قال 
urn:cts:arabLit:1313Barujirdi.Taraif.Shia002970Vols-ara1:ms422# معد: ان علي بن الحسن بن سلام، ومثنى بن الوليد، والمثنى بن عبد السلام كلهم حناطون كوفيون لا بأس بهم " كش " خصوصه عنه " صه ".(@)(@@) 5425 - المثنى بن عطية الخارفي الهمداني الكوفي " ق ".(@)(@@) 5426 - المثنى بن القاسم الحضرمي الكوفي " ق " قد تقدم عن الميرزا كونه ابن الحضرمي المتقدم.(@)(@@) 5427 - المثنى بن الوليد الحناط مولى كوفي، روى عن الصادق عليه السلام، له كتاب، عنه جماعة منهم الحسن بن علي بن يوسف بن بقاح، والحسن بن علي الخزاز، وتقدم في ابن عبد السلام عن معد أنه لا بأس به.(@)(@@) 5428 - مجاهد بن راشد بن مخراق النهدي الكوفي " ق ".(@)(@@) 5429 - مجاهد بن العلاء الكوفي " ق ".(@)(@@) 5430 - مجمع الحناط الكوفي روى عنه صفوان " ق " وفي نسخة الخياط بدل الحناط، ولعل الأخيرة أصح.(@)(@@) 5431 - مجمع بن معتب الكندي الكوفي " ق ".(@)(@@) 5432 - مجيب بن عمارة الهمداني الكوفي " ق ".(@)(@@) 5433 - محبوب بن حسان، وقيل: أبو ه حسان السكوني البكري " ق ".(@)(@@) 5434 - محبوب بن حكيم، روى عن عمر بن توبة انا أنزلناه قال PageV01P568(@)(@@) " غض ": لا نعرفه " صه " " د " والظاهر أنه في السابقة أيضا.(@)(@@) 5435 - محبوب بن سالم الجعفي الكوفي " ق ".(@)(@@) 5436 - محبوب بن عبد الله العطار كوفي " ق ".(@)(@@) 5437 - محرز بن حازم الزيدي الأثرم كوفي " ق ".(@)(@@) 5438 - محرز بن فضالة الأزدي الكوفي " ق ".(@)(@@) 5439 - محفوظ الإسكاف الكوفي " ق ".(@)(@@) 5440 - محفوظ بن عبد الله الحضرمي " ق ".(@)(@@) 5441 - محمد بن أبان بن ثعلب أبو سعيد البكري الجريري، مولى بني قيس بن ثعلبة كوفي " ق ".(@)(@@) 5442 - محمد بن أبان الخثعمي، مولاهم كوفي " ق ".(@)(@@) 5443 - محمد بن أبان بن صالح بن عمير القرشي الأموي كوفي، أسند عنه " ق ".(@)(@@) 5444 - محمد بن إبراهيم الأزدي الكوفي " ق ".(@)(@@) 5445 - محمد بن إبراهيم الامام، له نسخة عن جعفر بن محمد عليهما السلام كبيرة، عنه ابن ابنه عبد الصمد بن موسى " جش " العباسي الهاشمي المدني، أسند عنه، أصيب سنة أربعين ومائة وله سبع وخمسون سنة، وهو الذي يلقب بابن الامام.(@)(@@) 5446 - محمد بن إبراهيم الحضيني الأهوازي، روى " كش " عن معد عن حمدان عن معاوية عن أحمد بن محمد بن أبي نصر عن الحضيني، قال قلت لأبي جعفر:(@)(@@) ان 