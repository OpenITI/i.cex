urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms1#(@)(@)(@@) البحر : - 1(@)(@@) % شجون نحوها العشاق فاؤا % % وصب ما له في الصبر راء % % 2(@)(@@) % وصحب إن غروا بملام مثلي % % فرب أصاحب بالإثم باؤا % % 3(@)(@@) % وعين دمعها في الحب طهر % كأن دموع عيني بير حاء % % 4(@)(@@) % ولاح ما له هاء وميم % له من صبوتي ميم وهاء % % 5(@)(@@) % ومثلي ما لعشقته هدو % يرام ولا لسلوته اهتداء % % 6(@)(@@) % كأن الحب دائرة بقلبي % % فحيث الانتهاء الابتداء % % 7(@)(@@) % بروحي جيرة رحلوا بقلب % أحب وأحسنوا فيما أساؤا % % 8(@)(@@) % بهم أيام عيشي والليالي % % هي الغلمان كانت والإماء % % 9(@)(@@) % تولى من جمالهم ربيع % فجاء بنوء أجفاني الشتاء % % 10(@)(@@) % وبث صبابتي إنسان عيني % % فيا عجبا وفي الفم منه ماء % % PageV01P001 11(@)(@@) % على خدي حميم من دموعي % % صديق إن دنوا ونأوا سواء % % 12(@)(@@) % فأبكي حسرة حيث التنائي % % وأبكي فرحة حيث اللقاء % % 13(@)(@@) % كأن بكاي لي عبد مجيب % فما فرجي اذا الا البكاء % % 14(@)(@@) % بعين الله عين قد جفاها % % كراها والأحبة والهناء % % 15(@)(@@) % لفكرته سرى في كل واد % كأن حنينه فيها حداء % % 16(@)(@@) % ذكت أشواقه فمتى تراها % % قباب قبا كما لمعت ذكاء % % 17(@)(@@) % بحيث الأفق يشرق مطلعاه % وحيث سنا النبوة والسناء % % 18(@)(@@) % وباب محمد المرجو يروي % % لقاصده نجاح أو نجاء % % 19(@)(@@) % تلوذ بجاهه الفقراء مثلي % % من العمل الردي والاملياء % % 20(@)(@@) % فأما واجد فروى رباح % وأما مقتر فروى عطاء % % PageV01P002 21(@)(@@) % لنا سند من الرجوى لديه % % غداة غد يعنعنه الوفاء % % 22(@)(@@) % وترتقب العصاة ندى شفيع % مجاب قبل ما وقع النداء % % 23(@)(@@) % سلام الله اصباحا وممسى % % على مثواه والسحب البطاء % % 24(@)(@@) % كما كان الغمام عليه ظلا % عليه الآن يسفح ما يشاء % % 25(@)(@@) % ألا ياحبذا في الرسل شافي % % قلوب شفها للعشق داء % % 26(@)(@@) % فمرسلة لها سحب العوافي % % يعفى الداء بادره الدواء % % 27(@)(@@) % وما انتقبت مناقب أبطحي % وعنها الأرض تفصح والسماء % % 28(@)(@@) % فيشهد نجم تلك ونجم هذي % % ويجري من يديه ندى وماء % % 29(@)(@@) % على ساق سعت شجر وقامت % % حروب النصر وازدحم الظماء % % 30(@)(@@) % ففي الدنيا لنا بحداه ساق % % وفي الأخرى لنا الحوض الرواء % % PageV01P003 31(@)(@@) % وفي نار المجوس لنا دليل % % لأنفسهم بها ولها انطفاء % % 32(@)(@@) % وفي الأسرى وصبحته فخار % % ينادي ما على صبح غطاء % % 33(@)(@@) % فقل للملحدين تنقلوها % % جحيما أننا منكم براء % % 34(@)(@@) % وأن أبي ووالده وعرضي % % لعرض محمد منكم وقاء % % 35(@)(@@) % وأن محمدا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms2# لحبيب أنس % % وجنهمو لنعليه فداء % % 36(@)(@@) % نبي تجمل الأنباء عنه % % جمال الشمس يجلوها الضحاء % % 37(@)(@@) % وأين الشمس منه سنا ولولا % % سناه لما ألم بها بهاء % % 38(@)(@@) % كأن البدر صفره خشوع % له والشمس ضرجها حياء % % 39(@)(@@) % سري في حروف اللفظ سر % لمنطقه وللضاد اختباء % % 40(@)(@@) % ألم تر أنها جلست لفخر % % وقامت خدمة للضاد ظاء % % PageV01P004 41(@)(@@) % يولد فضل مولده سعودا % بنوا سعد بها أبدا وضاء % % 42(@)(@@) % لمبعثه على العادين نار % % وللهادين نور يستضاء % % 43(@)(@@) % فخير ينعم السعداء فيه % % وبأس تحتويه الأشقياء % % 44(@)(@@) % يجر على الثرى ذيل اتضاع % % وينصب في مكارمه الثراء % % 45(@)(@@) % ويكتب بالنصال غداة روع % % سطورا ما لأحرفها هجاء % % 46(@)(@@) % ممدحة ثلاثتها لضر % % ضراب أو طعان أو رماء % % 47(@)(@@) % فيالك من أخي صول ونسك % تقر له العدى والأولياء % % 48(@)(@@) % سهام دعا وسهام رأي % لها في كل معركة مضاء % % 49(@)(@@) % درى ذو الجيش ما صنعت ظباه % % و ما يدريه ما صنع الدعاء % % 50(@)(@@) % وقال الجود بعد الحلم حسبي % % حياء إن شيمتك الحياء % % PageV01P005 51(@)(@@) % فنعم الحصن ان طلعت خطوب % ونعم القطب ان دار الثناء % % 52(@)(@@) % ونعم الغوث ان دهياء دارت % % ونعم العون ان دار الرجاء % % 53(@)(@@) % ونعم المصطفى من معشر ما % % نجوم النيرات لهم كفاء % % 54(@)(@@) % تقدم سؤدد وقديم مجد % على سعد السعود له حباء % % 55(@)(@@) % ضفت حلل الثنا وصفت لديه % % وآدم بعدها طين وماء % % 56(@)(@@) % فلولا معرب الأمداح فيه % % هوى بيت القريض ولا بناء % % 57(@)(@@) % ولولاه لما حجت وعجت % % وفود البيت ضاق بها الفضاء % % 58(@)(@@) % فإن يتلى له في الحج حمد % فقدما قد تلته الأنبياء % % 59(@)(@@) % أعد لي يا رجاء زمان قرب % % بروضته أعد لي يا رجاء % % 60(@)(@@) % ولثم حصى لتربته ذكي % كأن شذاه في نفسي كباء % % PageV01P006 61(@)(@@) % وشكوى كربة فرجت وكانت % % من اللاتي يمد بها العناء % % 62(@)(@@) % ونفس ذنبها كالنيل مدا % % و ما لوعود توبتها وفاء % % 63(@)(@@) % مشوقة متى وعدت بخير % % ثقل سين وواو ثم فاء % % 64(@)(@@) % ولكن حبها وشهادتاها % % من النيران نعم الأكفياء % % 65(@)(@@) % صفي الله يا أزكى البرايا % % بحبك من عقائدنا الصفاء % % 66(@)(@@) % ويعتقنا المشفع من جحيم % % فلا عجب له منا الولاء % % 67(@)(@@) % عليك من الملائك كل وقت % صلاة في الجنان لها أداء % % 68(@)(@@) % وامداح بألسنة الورى في % % مطالعها ارتقاء وانتقاء % % 69(@)(@@) % اذا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms3# ختمت تعاد فكل تال % % له وقف عليها وابتداء % % PageV01P007 البحر : - 1(@)(@@) % قام يرنو بمقلة كحلاء % علمتني الجنون بالسوداء % % 2(@)(@@) % رشأ دب في سوالفه النم % % ل فهامت خواطر الشعراء % % 3(@)(@@) % روض حسن غنى لنا فوقه الحل % % ي فأهلا بالروضة الغناء % % 4(@)(@@) % جائر الحكم قلبه لي صخر % وبكائي له بكى الخنساء % % 5(@)(@@) % عذلوني على هواه فأغروا % % فهواه نصب على الأغراء % % 6(@)(@@) % من معيني على رشا صرت من ما % % ء دموعي عليه مثل الرشاء % % 7(@)(@@) % من معيني على لواعج حب % تتلظى من أدمعي بالماء % % 8(@)(@@) % وحبيب الي يفعل بالقل % % ب فعال الأعداء بالأعداء % % 9(@)(@@) % ضيق العين ان رنا واستمحنا % % وعناء تسمح البخلاء % % 10(@)(@@) % ليت أعطافه ولو في منام % وعدت باستراقة للقاء % % PageV01P008 11(@)(@@) % يتثنى كقامة الغصن اللد % ن ويعطو كالظبية الأدماء % % 12(@)(@@) % ياشبيه الغصون رفقا بصب % نائح في الهوى مع الورقاء % % 13(@)(@@) % يذكر العهد بالعقيق فيبكي % % لهواه بدمعة حمراء % % 14(@)(@@) % يالها دمعة على الخد حمرا % % ء بدت من سوداء في صفراء % % 15(@)(@@) % فكأني حملت رنك بن أيو % % ب على وجنتي لفرط ولاء % % 16(@)(@@) % ملك حافظ المناقب تروي % % راحتاه عن واصل عن عطاء % % 17(@)(@@) % في معاليه للمديح اجتماع % كأبي جاد في اجتماع الهجاء % % 18(@)(@@) % خل كعبا ورم نداه فما كع % % ب العطايا ورأسها بالسواء % % 19(@)(@@) % وارج وعد المنى لديه فإسما % % عيل ما زال معدنا للوفاء % % 20(@)(@@) % ما لكفيه في الثراء هدو % فهو فيه كسابح في ماء % % PageV01P009 21(@)(@@) % جمعت في فنائه الخيل والاب % % ل وفودا أكرم بها من فناء % % 22(@)(@@) % لو سكتنا عن مدحه مدحته % % بصهيل من حوله ورغاء % % 23(@)(@@) % همة جازت السماك فلم يع % % بأ مداها بالحاسد العواء % % 24(@)(@@) % وندى يخجل السحاب فيمشي % % من ورا جوده على استحياء % % 25(@)(@@) % طال بيت الفخار منه على الشع % % ر فماذا يقول بيت الثناء % % 26(@)(@@) % أعربت ذكره مباني المعاني % % فعجبنا لمعرب ذي باء % % 27(@)(@@) % ورقى صاعدا فلم يبق للحا % % سد إلا تنفس الصعداء % % 28(@)(@@) % شرف في تواضع ونوال % في اعتذار وهيبة في حياء % % 29(@)(@@) % يا مليكا علا على الشمس حتى % % عم إحسانه عموم الضياء % % 30(@)(@@) % صنت كفي عن الأنام ولفظي % % فحرام نداهم وثنائي % % PageV01P010 31(@)(@@) % وسقتني مياه جودك سقيا % رفعتني على ابن ماء السماء % % 32(@)(@@) % فابق عالي المحل داني العطايا % % قاهر البأس ظاهر 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms4# الانباء % % 33(@)(@@) % يتمنى حسودك العيش حتى % % أتمنى له امتدادج البقاء % % PageV01P011 البحر : - 1(@)(@@) % أودت فعالك يا أسما بأحشائي % % وا حيرتي بين أفعال وأسماء % % 2(@)(@@) % ان كان قلبك صخرا من قساوته % % فان طرف المعنى طرف خنساء % % 3(@)(@@) % ويح المعنى الذي أضرمت باطنه % % ما ذا يكابد من أهوال أهواء % % 4(@)(@@) % قامت قيامة قلبي في هواك فان % % أسكت فقد شهدت بالسقم أعضائي % % 5(@)(@@) % وقد بكى لي حتى الروض فاعتبروا % % كم مقلة لشقيق الغصن رمداء % % 6(@)(@@) % وأمرضتني جفون منك قد مرضت % فكان أطيب من نجح الدوا دائي % % 7(@)(@@) % يا صاحبي أقلا من ملامكما % % ولا تزيدا بهذا اللوم اغرائي % % 8(@)(@@) % هذي الرياض عن الأزهار باسمة % كما تبسم عجبا ثغر لمياء % % 9(@)(@@) % والأرض ناطقة عن صنع بارئها % % إلى الورى وعجيب نطق خرساء % % 10(@)(@@) % فما يصدكما والحال داعية % عن شرب فاقعة للهم صفراء % % PageV01P012 11(@)(@@) % راحا غريت برياها ومشربها % % حتى انتصبت اليها نصب اغراء % % 12(@)(@@) % من الكميت التي تجري بصاحبها % % جري الرهان إلى غايات سراء % % 13(@)(@@) % سكرا أحيطت أباريق المدام به % % فرجعت صوت تمتام وفأفاء % % 14(@)(@@) % من كف أغيد يحسوها مقهقهة % كما تأود غصن تحت ورقاء % % 15(@)(@@) % حسبي من الله غفر للذنوب ومن % % جدوى المؤيد تجديد لنعمائي % % 16(@)(@@) % ملك يطوق بالإحسان وفد رجا % % وبالظبا والعوالي وفد هيجاء % % 17(@)(@@) % ذا بالنضار وهذا بالحديد فما % % ينفك آسر أحباب وأعداء % % 18(@)(@@) % داع لجود يد بيضاء ما برحت % % تقضي على كل صفراء وبيضاء % % 19(@)(@@) % يدافع النكبات الموعدات لنا % % حتى الرياح فما تسري بنكباء % % 20(@)(@@) % ويوقد الله نورا من سعادته % % فكيف يطمع حساد بإطفاء % % PageV01P013 21(@)(@@) % لو جاورت آل ذبيان حماه لما % % ذموا العواقب من حالات غبراء % % 22(@)(@@) % ولو حمى حمل الأبراج دع حملا % يوم الهباءة لم يقصد بدهياء % % 23(@)(@@) % ولو رجا المشتري ادراك غايته % % لدافعته عصا في كف جوزاء % % 24(@)(@@) % مازال يرفع إسماعيل بيت على % حتى استوت غايتا نسل وآباء % % 25(@)(@@) % مصرف الفكر في حب العلوم فما % % يشفى بسعدي ولا يروى بظمياء % % 26(@)(@@) % له بدائع لفظ صاحبت كرما % كأنهن نجوم ذات أنواء % % 27(@)(@@) % وأنمل في الوغى والسلم كاتبة % إما بأسمر نضو أو بسمراء % % 28(@)(@@) % تكفلت كل عام سحب راحته % % عن البرية إشباعي وإروائي % % 29(@)(@@) % فما أبالي اذا استكثرت عائلة % فقد كفى هم إصباحي وإمسائي 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms5# % % 30(@)(@@) % نظمت ديوان شعر فيه واتخذت % % علي كتابه ديوان إعطاء % % PageV01P014 31(@)(@@) % وعاد قول البرايا عبد دولته % أشهى وأشهر ألقابي وأسمائي % % 32(@)(@@) % محرر اللفظ لكن غر أنعمه % قد صيرتني من بعض الأرقاء % % 33(@)(@@) % أعطي الزكاة وقدما كنت آخذها % % يا قرب ما بين اقتاري وإثرائي % % 34(@)(@@) % شكرا لوجناء سارت بي إلى ملك % لولاه لم يطو نظمي سمعة الطائي % % 35(@)(@@) % عال عن الوصف إلا أن أنعمه % لجبر قلبي تلقاني بإصغاء % % 36(@)(@@) % ياجابر القلب خذها مدحة سلمت % فبيت حاسدها أولى بإقواء % % 37(@)(@@) % مشت على مستحب الهمز مصمية % نبالها كل هماز ومشاء % % 38(@)(@@) % بيوت نظم هي الجنات معجبة % % كأن في كل بيت وجه حوراء % % PageV01P015 البحر : - 1(@)(@@) % ليل وصل معطر الإرجاء % % لاح فيه الصباح قبل المساء % % 2(@)(@@) % زارني من هويته باسم الثغ % % ر فجلى غياهب الظلماء % % 3(@)(@@) % التقيه ويحسب الهجر قلبي % % فكأني ما نلت طيب اللقاء % % 4(@)(@@) % رب عيش طهر على ذلك الس % % فح غنمناه قبل يوم التنائي % % 5(@)(@@) % نقطع اليوم كالدجى في سكون % ودجاه كاليوم في الاضواء % % 6(@)(@@) % فكأني بالأمن في ظل إسما % % عيل رب العلى ورب الوفاء % % 7(@)(@@) % ملك أنشر الثنا في زمان % % نسي الناس فيه ذكر الثناء % % 8(@)(@@) % هاجر حرف لا اذا سئل الجو % % د كهجران واصل للراء % % 9(@)(@@) % يسبق الوعد بالنوال فلا يح % % وج قصاده إلى الشفعاء % % 10(@)(@@) % شاع بالكتم جود كفيه ذكرا % فهو كالمسك فاح بالاخفاء % % PageV01P016 11(@)(@@) % جاد حتى كادت عفاة حماه % لا يذوقون لذة للحباء % % 12(@)(@@) % كلما ظن جوده في انتهاء % % لائم عاد جوده في ابتداء % % 13(@)(@@) % عذلوه على النوال فأغروا % % فنداه نصب على الاغراء % % 14(@)(@@) % وحلا من بابه فسعت كالن % مل فيه طوائف الشعراء % % 15(@)(@@) % شرف في تواضع واحتمال % في اقتدار وهيبة في حياء % % 16(@)(@@) % رب وجناء ضامر تقطع البي % % د على إثر ضامر وجناء % % 17(@)(@@) % في قفار يخاف في أفقها البر % % ق سرى فهو خافق الأحشاء % % 18(@)(@@) % رتعت في حماك ثم استراحت % % من أليمين الرحل والبيداء % % 19(@)(@@) % وظلام كأن كيوان أعمى % % سائل فيه عن عصا الجوزاء % % 20(@)(@@) % ذكر السائلون ذكرك فيه % فسروا بالأفكار في الأضواء % % PageV01P017 21(@)(@@) % وحروب تجري السوابح منها % % في بحار مسفوحة من دماء % % 22(@)(@@) % من ضراب تشب من وقعه النا % % ر وتطفى حرارة الشحناء % % 23(@)(@@) % يئس الناس اذ 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms6# تجلى فجل % يت دجاها بالبأس والآراء % % 24(@)(@@) % فأجل عني حالا أراني منها % % كل يوم في غارة شعواء % % 25(@)(@@) % فكفى من وضوح حالي أني % % في زماني هذا من الأدباء % % 26(@)(@@) % ضاع فيه لفظي الجهير وفضلي % % ضيعة السيف في يد شلاء % % 27(@)(@@) % غيرأني على عماد المعالي % % قد بنيت الرجا أتم بناء % % 28(@)(@@) % ليت شعري من منك أولى بمثلي % % يافريد الأجواد والكرماء % % 29(@)(@@) % دمت سامي المقام هامي العطايا % % قاهر البأس فارج الغماء % % 30(@)(@@) % لمواليك ما ارتجى من بقاء % ولشانيك ما اختشى من فناء % % PageV01P018 البحر : - 1(@)(@@) % ليلاي كم ليلة بالشعر ليلاء % % وليلة قبلها كالثغر غراء % % 2(@)(@@) % وصل وهجر فمن ظلماء تخرجني % % لنور عيش ومن نور لظلماء % % 3(@)(@@) % ما أنت إلا زمان العمر مذهبة % % بالثغر والشعر إصباحي وإمسائي % % 4(@)(@@) % أفديك من زهرة بالحسن مشرقة % بليت من عاذلي فيها بعواء % % 5(@)(@@) % ويح العذول يرى ليلي ويسمع من % % لا يسمع العذل فيها قول فحشاء % % 6(@)(@@) % يارب طرف ضرير عن محاسنها % % ورب أذن عن الفحشاء صماء % % 7(@)(@@) % ورب طيف على عذر يؤوبني % % بشخص عذراء يجلو كأس عذراء % % 8(@)(@@) % فبت أرشف من فيه وقهوته % حلين قد أثملا بالنوم أعضائي % % 9(@)(@@) % زور عفيف على عين الشجي مشى % % فيا له صالحا يمشي على الماء % % 10(@)(@@) % ثم انتبهت وذات الخال ساكنة % % لم تدر سهدي ولم تشعر بإغفائي % % PageV01P019 11(@)(@@) % رشيقة ما كأني يوم فرقتها % % الا على آلة في القوم حدباء % % 12(@)(@@) % ميت من الحب إلا أنني بسرى % % ذكر الصبابة حي بين أحياء % % 13(@)(@@) % في كل حي حديث لي بسلسله % % تعديل دمعي أو تجريح أحشائي % % 14(@)(@@) % قد لوع الحب قلبي في تلهبه % وصرح الدمع في ليلي بإشقائي % % 15(@)(@@) % وزال مازال من وصل شفيت به % % من عارض اليأس لكن بعد إشفائي % % 16(@)(@@) % أيام لي حيث وارت صدغها قبل % كأن سرعتها ترجيع فأفاء % % 17(@)(@@) % تدير عينا وكأسا لي فلا عجب % % اذا جننت بسوداء وصفراء % % 18(@)(@@) % حتى اذا ضاء شيب الرأس بت على % % بقية من نواهي النفس بيضاء % % 19(@)(@@) % مديرة الكأس عني أن لي شغلا % % عن صفو كأسك من شيبي بإقذاء % 20(@)(@@) % ما الشيب إلا قذى عين وسخنتها % % عندي وعند برود الظلم لمياء % % PageV01P020 21(@)(@@) % عمري لقد قل صفو العيش من بشر % % وكيف لا وهو من 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms7# طين ومن ماء % % 22(@)(@@) % وانما لعلي في الورى نعم % % كادت تعيد لهم شرخ الصبي النائي % % 23(@)(@@) % وراحة حوت العليا بما شملت % % أبناء آدم بالنعمى وحواء % % 24(@)(@@) % قاضي القضاة اذا أعيا الورى فطنا % حسيرة العين دون الباء والتاء % % 25(@)(@@) % والمعتلي رتبا لم يفتخر بسوى % % أقدامه الراء قبل التاء والياء % % 26(@)(@@) % والثاقب الفكر في غراء ينصبها % % لكل طالب نعمى نصب إغراء % % 27(@)(@@) % لطالب الجود شغل من فتوته % % وطالب العلم أشغال بإفتاء % % 28(@)(@@) % لو مس تهذيبه أو رفقة حجرا % مسته في حالتيه ألف سراء % % 29(@)(@@) % من بيت فضل صحيح الوزن قد رجحت % % به مفاخر آباء وأبناء % 30(@)(@@) % قامت لنصرة خير الانبياء ظبا % % أنصاره واستعاضوا خير أنباء % % PageV01P021 31(@)(@@) % أهل الصريجين من نطق ومن كرم % آل الريحين من نصر وأنواء % % 32(@)(@@) % المعربون بألفاظ ولحن ظبا % % ناهيك من عرب في الخلق عرباء % % 33(@)(@@) % مفرغين جفونا في صباح وغى % % ومالئين جفانا عند إمساء % % 34(@)(@@) % مضوا وضاءت بنوهم بعدهم شهبا % تمحى بنور سناها كل ظلماء % % 35(@)(@@) % فمن هلال ومن نجم ومن قمر % في أفق عز وتمجيد وعلياء % % 36(@)(@@) % حتى تجلى تقي الدين صبح هدى % % يملي وإملاؤه من فكره الرائي % % 37(@)(@@) % يجلو الدياجي مستجلى سناه فلا % % نعدم زمان جلي الفضل جلاء % % 38(@)(@@) % أغر يسقي بيمناه وطلعته % % صوب الحيا عام سراء وضراء % % 39(@)(@@) % لو لم يجدنا برفد جادنا بدعا % معد على سنوات المحل دعاء % % 40(@)(@@) % ذو العلم كالعلم المنشور تتبعه % % بنو قرى تترجاه وإقراء % % PageV01P022 41(@)(@@) % فالشافعي لو استجلى صحائفه % % فدى بأمين فحواها وآباء % % 42(@)(@@) % وبات منقبضا رب البسيط بها % % ومات في جلده من بعد إحياء % % 43(@)(@@) % يقر بالرق من ملك ومن صحف % لمن يجل به قدر الارقاء % % 44(@)(@@) % لمن بكفيه اما طوق عارضة % للاولياء واما غل أعداء % % 45(@)(@@) % لا عيب فيه سوى تعجيل أنعمه % فما يلذ برجوى بعد ارجاء % % 46(@)(@@) % يلقاك بالبشر تلو البر مبتسما % كالبرق تلوهتون المزن وطفاء % % 47(@)(@@) % ان أقطع الليل في مدحي له فلقد % % حمدت عند صباح البشر إسرائي % % 48(@)(@@) % لبست نعماه مثل الروض مزهرة % بفائضات يد كالغيث زهراء % % 49(@)(@@) % وكيف لا ألبس النعمى مشهرة % والغيث في جانبيها أي وشاء % % 50(@)(@@) % وكيف لا أورد الأمداح تحسبها % % في الصحف غانية من بين غناء % % PageV01P023 51(@)(@@) % ياجائدا رام أن تخفى 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms8# له منن % هيهات ما المسك مطوي بإخفاء % % 52(@)(@@) % ولا نسيم ثنائي بالخفي وقد % % رويته بالعطايا أي إرواء % % 53(@)(@@) % خذها اليك جديدات الثنا حللا % صنع السري ولكن غير رفاء % % 54(@)(@@) % وعش كما شئت ممتدحا % تثنى بخير لآل خير آلاء % % 55(@)(@@) % منك استفدت بليغ اللفظ أنظمه % % نظما يهيم ألباب الألباء % % 56(@)(@@) % أعدت منه شذورا لست أحبسها % % عن مسمعيك وليس الحبس من راء % % PageV01P024 البحر : - 1(@)(@@) % جسم سقيم لا يرام شفاؤه % % سلبت سويدا مهجتي سوداؤه % % 2(@)(@@) % عجبا له جفنا كما قسم الهوى % % فيه الضنى وبمهجتي أدواؤه % % 3(@)(@@) % يا معرضا يهوى فنا روحي ولي % % روح تمنى أن يطول بقاؤه % % 4(@)(@@) % ان ينأ عني منك شخص باخل % روحي وما ملكت يدي فداؤه % % 5(@)(@@) % فلرب ليل شق طيفك جنحه % % والصبح لم ينشق عنه رداؤه % % 6(@)(@@) % سمحا يسابقني إلى القبل التي % % قد كان يقنعني بها ايماؤه % % 7(@)(@@) % ومضيق ضم لودراه معذبي % % ضاقت عليه أرضه وسماؤه % % 8(@)(@@) % جسمان مرئيان جسما واحدا % كالنظم شدد حرفه علماؤه % % 9(@)(@@) % أفدي الذي هو في سناه وسطوه % بدر وقتلى حسنه شهداؤه % % 10(@)(@@) % قامت حلاه بوصفه حتى غدا % % متغزلا في خده وأواؤه % % PageV01P025 11(@)(@@) % حتام بين مذكر ومؤنث % قلبي الشجي طويلة برحاؤه % % 12(@)(@@) % وعلى الغزالة والغزال لأدمعي % % سيل وأقوال الوشاة غثاؤه % % 13(@)(@@) % سقيا لمصر حمى بسيط بحره % للواصفين مديدة أفياؤه % % 14(@)(@@) % لو لم يكن بلدا يعالي بلدة % بين النجوم لما ارتضاه علاؤه % % 15(@)(@@) % أما علي المستماح فكلنا % % متشيع يسري اليه ولاؤه % % 16(@)(@@) % المشتري سلع الثناء بجوده % % وبهاؤه لعطارد وذكاؤه % % 17(@)(@@) % دلت مناقبه على أنسابه % % وحماه عن تسآل من لألاؤه % % 18(@)(@@) % ذو الفضل من نسب ومن شيم فيا % % لله منبت عوده ونماؤه % % 19(@)(@@) % والعود صح نجاره فاذا سرى % % أرج الثنا فالعود فاح كباؤه % % 20(@)(@@) % والبيت حيث سنا الصباح عموده % وبحيث أخبية السعود خباؤه % % PageV01P026 21(@)(@@) % واللفظ نثر من صفات الحسن لا % % بيضاء روض حمى ولا صفراؤه % % 22(@)(@@) % والجود ما لحيا الشآم عمومه % فينا ولا في نيل مصر فناؤه % % 23(@)(@@) % والرأي نافذة قضايا رسمه % من قبل ما نوت الارادة راؤه % % 24(@)(@@) % وسعادة الدارين جل أساسها % % بمعاقد التقوى فجل بقاؤه % % 25(@)(@@) % من أسرة عمرية عدوية % شهدت بفضل مكانها أعداؤه % % 26(@)(@@) % من كل ذي نسب سمت أعراقه % % يوم العلا واستبطحت بطحاؤه % % 27(@)(@@) % قوم 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms9# همو غرر الزمان اذا أضا % % أمراؤه وزراؤه شعراؤه % % 28(@)(@@) % ملأوا الثرى جودا يزين ربيعه % % والجو ذكرا تنجلي أضواؤه % % 29(@)(@@) % فالجو تصدح بالمحامد عجمه % والترب تنطق بالثنا خرساؤه % % 30(@)(@@) % من حول منزله الرجاء محلق % ومقصر حمد الفتى وثناؤه % % PageV01P027 البحر : - 1(@)(@@) % وعدت بطيف خيالها هيفاء % ان كان يمكن مقلتي اغفاء % % 2(@)(@@) % يا من يوفر طيفها سهري لقد % % أمن ازديارك في الدجى الرقباء % % 3(@)(@@) % يا من يطيل أخو الهوى لقوامها % % شكواه وهي الصعدة السمراء % 4(@)(@@) % أفديك شمس ضحى دموعي نثرة % لما تغيب وعاذلي عواء % % 5(@)(@@) % وعزيزة هي للنواظر جنة % تجلى ولكن للقلوب شقاء % 6(@)(@@) % خضبت بأحمر كالنضار معاصما % كالماء فيها رونق وصفاء % % 7(@)(@@) % واها لهن معاصما مخضوبةسال النضار بها وقام الماءص أصبو إلى البرحاء أعلم أنهسقط شطرين ص % % يرضيك أن يعتادني البرحاء % % 8(@)(@@) % ويبث ما يلقاه من ألم الجوى % % قلبي وأنت الصعدة الصماء % % 9(@)(@@) % كم من جمال عنده ضر الفتى % % ولكم جمال عنده السراء % % 10(@)(@@) % كجمال دين الله وابن شهابه % لا الظلم حيث يرى ولا الظلماء % % PageV01P028 11(@)(@@) % الماجد الراقي مراتب سؤدد % قد رصعت بجواره الجوزاء % % 12(@)(@@) % ذاك الذي أمسى السها جارا له % لكن حاسد مجده العواء % % 13(@)(@@) % عمت مكارمه وسار حديثه % % فبكل أرض نعمة وثناء % % 14(@)(@@) % وسعت يراعته بأرزاق الورى % % فكأنها قلب وتلك رشاء % % 15(@)(@@) % وحمى العواصم رأيه ولطالما % % قعد الحسام وقامت الآراء % % 16(@)(@@) % عجبا لنار ذكائه مشبوبة % وبظله تتفيأ الأفياء % % 17(@)(@@) % وللفظه يزداد رأي مديره % % وحجاه وهو القهوة الصهباء % % 18(@)(@@) % غني اليراع به وأظهر طرسه % وكذا تكون الروضة الغناء % % 19(@)(@@) % ياراكب العزمات غايات المنى % % مغنى شهاب الدين والشهباء % % 20(@)(@@) % ذي المجد لا في ساعديه عن العلا % % قصر ولا في عزمه إعياء % % PageV01P029 21(@)(@@) % والعدل يردع قادرا عن عاجز % % فالذئب هاجعة لديه الشاء % % 22(@)(@@) % والحلم يروي جابر عن فضله % % والفضل يروي عن يديه عطاء % % 23(@)(@@) % يا أكمل الرؤساء لا مستثنيا % أحدا إذا ما عدت الرؤساء % % 24(@)(@@) % يا من مللت من المعاد له وما % % ملت لدي معادها النعماء % % 25(@)(@@) % ان لم تقم بحقوق ما أوليتني % % مدحي فأرجو أن يقوم دعاء % % 26(@)(@@) % شهدت معاليك الرفيعة والندى % % أن الورى أرض وأنت سماء % % PageV01P030 البحر : - 1(@)(@@) % سهرت عليك لواحظ الرقباء % % سهرا ألذ لها من الاغفاء % % 2(@)(@@) % فمتى أحاول غفلة ومرادهم 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms10# % % بيع الرقاد بلذة استحلاء % % 3(@)(@@) % ومتى يقصر عاذلي ورجاؤه % % في مر ذكرك دائما ورجائي % % 4(@)(@@) % قسما بسورة عارضيك فانها % % كالنمل عند بصائر الشعراء % % 5(@)(@@) % وجفونك اللاتي تبرح بالورى % % وتقول لا حرج على الضعفاء % % 6(@)(@@) % اني ليعجبني بلفظ عواذلي % % مني ومنك تجمع الأسماء % % 7(@)(@@) % وتلذ لي البرحاء أعلم أنه % % يرضيك ما ألقى من البرحاء % % 8(@)(@@) % ويشوقني مغنى الوصال فكلما % % ذكر العقيق بكيته بدمائي % % 9(@)(@@) % أيام لا أهوى لقاك بقدر ما % % تهوي لإفراط الوداد لقائي % % 10(@)(@@) % متمازجان من التعانق والوفا % % في الحب مزج الماء بالصهباء % % PageV01P031 11(@)(@@) % لو رامت الأيام سلوة بعضنا % % لم تدرمن فينا أخو الاهواء % % 12(@)(@@) % وصل سهرت زمانه لتنعم % % وسهرت بعد زمانه بشقاء % % 13(@)(@@) % يا جفن لست أراك تعرف ماالكرى % % فعلام تشكو منه مر جفاء % % 14(@)(@@) % كانت ليالي لذة فتقلصت % % بيد الفراق تقلص الأفياء % % 15(@)(@@) % ومنازل بالسفح غير رسمها % % بمدامع العشاق والأنواء % % 16(@)(@@) % لم يبق لي غير انتشاق نسيمها % % ياطول خيبة قانع بهواء % % 17(@)(@@) % كمؤمل يبغي براحة واهب % كرما ويترك أكرم الوزراء % % 18(@)(@@) % الصاحب الشرف الرفيع على السها % % قدرا برغم الحاسد العواء % % 19(@)(@@) % ندب بدا كالشمس في أفق العلا % % فتفرقت أهل العلا كهباء % % 20(@)(@@) % عالي المكانة حيث حل مقامه % % كالنجم حيث بدا رفيع سناء % % PageV01P032 21(@)(@@) % ما السحب خافقة ذوائب برقها % % بأبر من جدواه في اللأواء % % 22(@)(@@) % لا والذي أعلا وأعلن مجده % حتى تجاوز هامة الجوزاء % % 23(@)(@@) % لا عيب في نعماه إلا أنها % % تسلي عن الأوطان والقرباء % % 24(@)(@@) % مغرى على رغم العواذل والعدى % % بشتات أموال وجمع ثناء % % 25(@)(@@) % لا تستقر يداه في أمواله % % فكأنما هو سابح في ماء % % 26(@)(@@) % جمعت شمائله المديح كمثل ما % % جمعت أبي جاد حروف هجاء % % 27(@)(@@) % وتفردت كرما وان قال العدى % % ان الغمام لها من النظراء % % 28(@)(@@) % وتقدمت في كل محفل سؤدد % تقديم بسم الله في الأسماء % % 29(@)(@@) % أكرم بهن شمائلا معروفة % % يوم العلى بتحمل الأعباء % % 30(@)(@@) % يلوي بقول اللائمين نوالها % % كالسيل يلوي جريه بغثاء % % PageV01P033 31(@)(@@) % ومراتبا غاظ السماء علوها % % فتلقبت للغيظ بالجرباء % % 32(@)(@@) % ومناقبا تمشي المدائح خلفها % % لوفور سؤددها على استحياء % % 33(@)(@@) % وفضائلا كالروض غنى ذكرها % % يا حبذا من روضة غناء % % 34(@)(@@) % ويراعة تسطو فيقرع سنها % % خجلا قوام الصعدة السمراء % % 35(@)(@@) % هرقت دم المحل المروع والعدى % % حتى بدت في 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms11# أهبة حمراء % % 36(@)(@@) % عجبا لإبقاء المهارق تحتها % % ونوالها كالديمة الوطفاء % % 37(@)(@@) % كم عمرت بحسابها من دولة % % وبلا حساب كم سخت بعطاء % % 38(@)(@@) % ولكم جلا تدبيرها عن موطن % % دهماء واسأل ساحة الشهباء % % 39(@)(@@) % لولاك في حلب لأحدر ضرعها % % وقرى ضيوف جنابها بعناء % % 40(@)(@@) % يا من به تكفى الخطوب وترتمي % % بكر الثناء لسيد الأكفاء % % PageV01P034 41(@)(@@) % أنت الذي أحيا القريض وطالما % % أمسى رهين عنا طريد فناء % % 42(@)(@@) % في معشر منعوا اجابة سائل % % ولقد يجيب الصخر بالأصداء % % 43(@)(@@) % أسفي على الشعراء أنهمو على % % حال تثير شماتة الأعداء % % 44(@)(@@) % خاضوا بحور الشعر إلا أنها % % مما تريق وجوههم من ماء % % 45(@)(@@) % حتى اذا لجأوا اليك كفيتهم % % شجنا وقلت أذلة العلياء % % 46(@)(@@) % ظنوا السؤال خديعة وأنا الذي % % خدعت يداه بصائر العلماء % % 47(@)(@@) % أعطوا أجورهم وأعطيت اللهى % % شتان بين فنا وبين بقاء % % 48(@)(@@) % شكرا لفضلك فهو ناعش عيشتي % % ونداك فهو مجيب صوت ندائي % % 49(@)(@@) % من بعد ما ولع الزمان بمهجتي % % فردعته وحبوتني حوبائي % % 50(@)(@@) % وبلغت ما بلغ السحاب براحة % عرفت أصابع بحرها بوفاء % % PageV01P035 51(@)(@@) % فانعم بما شادت يداك ودم على % % مر الزمان ممدح الآلاء % % 52(@)(@@) % واحك الكواكب في البقاء كمثل ما % % حاكيتها في بهجة وعلاء % % PageV01P036 البحر : - 1(@)(@@) % مزجت بتذكار العقيق بكائي % % وطارحت معتل النسيم بدائي % % 2(@)(@@) % وان حدث العذال عني بسلوة % فاني وعذالي من الضعفاء % % 3(@)(@@) % وليس دوائي غيرتربة أحمد % بطيبة عال فوق كل سماء % % 4(@)(@@) % تطوف بمسراه الملائك خشعا % مساء صباح أو صباح مساء % % 5(@)(@@) % فهل لي إلى أبيات طيبة مطلع % به مخلص لي من اسار شقائي % % 6(@)(@@) % أصوغ على الدر اليتيم مدائحا % أعد بها من صاغة الشعراء % % 7(@)(@@) % ببيت زهير حيث كعب مبارك % % وحسان مدحي ثابت ورجائي % % PageV01P037 البحر : - 1(@)(@@) % يا جفن امزج ادمعي بدمائي % % وأشهد بها لملوكنا الشهداء % % 2(@)(@@) % لهفي على ملكين جاد عليهما % % في كل أرض أفق كل سماء % % 3(@)(@@) % لهفي لاسماعيل قبل محمد % لم ألق يوم رداهما لفداء % % 4(@)(@@) % أما ذبيحا مقلتي ومدامعي % % لهما فما وفيا بفيض دماء % % 5(@)(@@) % بحران اسند عن يزيد وواصل % لهما وأروي عن رجا وعطاء % 6(@)(@@) % ذهبا فلا ذهب أناديه سوى % % ما صاغ خدي باحمرار بكائي % % 7(@)(@@) % نم يا محمد مع أبيك فانه % % مارث وأبيك عهد رثائي % % PageV01P038 البحر : - 1(@)(@@) % يا روضة الحسن 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms12# ان النفس خضراء % فهل يد بيننا للوصل بيضاء % 2(@)(@@) % بصاد أقسم ما للعين ان عشقت % % سواك نون ولا ظاء ولا راء % 3(@)(@@) % وان شعري اذا نظمت في غزل % ومدح سلطاننا للروض وشاء % 4(@)(@@) % سلطاننا حسن الاوصاف أجمعها % % يروي بها عن صحيح الملك أبناء % 5(@)(@@) % يا من له تعرب الآفاق عن سير % % عظمى وتنطق أرض وهي خرساء % % 6(@)(@@) % تشريف عبدك نادى بيت مدحته % لقد تشرف بنيان وبناء % 7(@)(@@) % أما العدى فلهم من خلطهم خلع % في الصدر سوداء أو في الرأس صفراء % % PageV01P039 البحر : - 1(@)(@@) % قسمت بين ظبا الملاح تغزلي % % ولمدح انشاء الملوك ثنائي % % 2(@)(@@) % ولسيف دين الله يعمل خيله % غزوا من البلقاء للشهباء % % 3(@)(@@) % بين العشائر والعشير محاسن % غزواته بالرأي والآراء % % 4(@)(@@) % بالرعب طورا والقواضب تارة % تزور منه نواظر الزوراء % % 5(@)(@@) % فكأنني بك فاتحا شرقيها % % للسد يا مفتاح كل هناء % % 6(@)(@@) % وكأنني يا سيف دولة فتنة % بك وهو مفتخر على القدماء % % 7(@)(@@) % في الشعر والانشاء بابن نباتة % تزهو على الخطباء والشعراء % % PageV01P040 البحر : - 1(@)(@@) % قسما ما حلت عن عهد الوفاء % % بعد مصر لا ولا نيل بكائي % % 2(@)(@@) % حبها تحتي وفوقي ويميني % % وشمالي وأمامي وورائي % % 3(@)(@@) % فهي ستي من جهاتي ولديها % % سيدي من حيث ودي وولائي % % 4(@)(@@) % ناصر الدين الذي ابيض ثنا % % تضرب الأمثال فيه بالثناء % % 5(@)(@@) % شائد البيت الذي مازال يمشي % % حال مثلي من ذويه بضياء % % 6(@)(@@) % سادة السادات من دين ودنيا % % بلغاء وزراء أولياء % % 7(@)(@@) % لا عدمنا قصصا للمدح فيهم % % داعيا كالنمل وفد الشعراء % % PageV01P041 البحر : - 1(@)(@@) % صفاء ودي مشهور لديك فما % % للنفس أشياء أخفيها وأشياء % % 2(@)(@@) % حاشا الدليل على البرهان يشهده % % في محضرين أحباء وأعداء % % 3(@)(@@) % ياليت صحبا على ضعفي وقوتهم % % ولي من الشكر أشواق وإملاء % % 4(@)(@@) % وحسب قلبي ان كان الصدود رضى % فداوني بالتي كانت هي الداء % % 5(@)(@@) % وهاك ياساكنا قلبي كؤوس طلا % لو مسها حجر مسته سراء % % 6(@)(@@) % وقل لمن قلبه أيضا قسا حجرا % هلا تفجر منه كالصفا ماء % % 7(@)(@@) % آها لشرخ شباب كان لي ومضى % % واعتضت شرخا ولكن ماله خاء % % PageV01P042 البحر : - 1(@)(@@) % ياواحد المدح والثناء % وموجب الأجر والدعاء % 2(@)(@@) % تهن بالعشر في سرور % % وفي حبور وفي ارتقاء % % 3(@)(@@) % فلثم يمناك فيه لثم % بخمسها لازم الأداء % % 4(@)(@@) % فأنت بالعشر في سرور 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms13# % % ونحن بالخمس في ثناء % % PageV01P043 البحر : - 1(@)(@@) % أهلا بمنداك السعيد وحبذا % % في مطلع العلياء منك بهاء % 2(@)(@@) % في الأرض من أثر السرى قول به % % يملي الهنا ولشهرنا إصغاء % % 3(@)(@@) % نهدي الذي بهباته وثنائه % % سمع الأصم وقالت الخرساء % % PageV01P044 البحر : - 1(@)(@@) % غاب ذو الفضل في حمى مصرعنا % % فهنيئا له حمى النعماء % % 2(@)(@@) % تسقط الطير حيث تلتقط الح % % ب وتغشى منازل الكرماء % % 3(@)(@@) % حجلي اذا انتسبت ولكن % % ألف عرف له وألف ثناء % % PageV01P045 البحر : - 1(@)(@@) % أيها الكامل قصرا % وولاء وثناء % % 2(@)(@@) % أحمد الله الذي قد % % جعل الشمس ضياء % % 3(@)(@@) % سيد حل من المج % % د المعلى حيث شاء % % 4(@)(@@) % ودنا ورد أيادي % % ه فقصرت الرشاء % % PageV01P046 البحر : - 1(@)(@@) % شكرا لنعماك يا من % % عليه سر ثنائي % % 2(@)(@@) % كم نعمة لك مهما % % نظرت كانت إزائي % % 3(@)(@@) % يمناي يسراي فوقي % % تحتي أمامي ورائي % % PageV01P047 البحر : - 1(@)(@@) % و هائم بالجواري الخود قلبي من % % سمر القدود فسمراء ولمياء % % 2(@)(@@) % من السراري التي بعد موت أب % % لو مسها حجر مسته سراء % % PageV01P048 البحر : - 1(@)(@@) % هنئت شهرا بالسعادة مقبلا % يا من أفاض على الورى نعماءه % % 2(@)(@@) % أسمعته فيك الثناء مخبرا % فانظر لمن سمع الأصم ثناءه % % PageV01P049 البحر : - 1(@)(@@) % ما بال ليلي لا يسير كأنما % % وقفت كواكبه من الإعياء % % 2(@)(@@) % و كأنما كيوان في آفاقه % % أعمى يسائل عن عصا الجوزاء % % PageV01P050 البحر : - 1(@)(@@) % أكتم أخبار الهوى عن عواذلي % % و للطرف مني بالمدامع انباء % % 2(@)(@@) % فيا عجبا مني لإنسان مقلني % % يحدث أخباري وفي فمه ماء % % PageV01P051 البحر : - 1(@)(@@) % أمولاي فخر الدين شكرا لأنعم % % لنا بشذاها غبطة وهناء % % 2(@)(@@) % سقيت بماء الورد غرس مكارم % فلا عجب إن فاح منه ثناء % % PageV01P052 البحر : - 1(@)(@@) % يا لهف قلبي على عبد الرحيم ويا % % شوقي إليه وياشجوي ويادائي % % 2(@)(@@) % في شهر كانون وافاه الحمام لقد % % أحرقت بالنار ياكانون أحشائي % % PageV01P053 البحر : - 1(@)(@@) % صحبت ركابك حيث سرت مسرة % موصولة بسعادة وهناء % % 2(@)(@@) % وجرت على الوادي وطيب بلاده % فزها الصعيد على طهور الماء % % PageV01P054 البحر : - 1(@)(@@) % رب سوداء مقلة هيجت لي % % داء وجد أعظم به من داء % 2(@)(@@) % ليت رمان صدرها كان يجنى % % فهو بعض الدوا من السوداء % PageV01P055 البحر : - 1(@)(@@) % ياسراة الشآم أشكو اليكم % % أرض قل فلاحها للرجاء % % 2(@)(@@) % واذا قلت الفلاحة في الأر % % ض فعتب الفتى على الرؤساء % % PageV01P056 البحر : - 1(@)(@@) % رب ان 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms14# ابن عامر هاثم الف % % كرمعنى في صبحة و المساء % % 2(@)(@@) % يتمنى القضا فلا تعطينه % واجعل الموت سابقا للقضاء % % PageV01P057 البحر : - 1(@)(@@) % مشروط خد مصحف كم % % جاء رقيب له إزائي % % 2(@)(@@) % إن قلت ذا الشرط منك شرطي % % قال وهذا الجزا جزائي % % PageV01P058 البحر : - 1(@)(@@) % سائلي عن شرح حالي % % كيف حال الضعفاء % % 2(@)(@@) % فرط إسهال وفقر % إن ذا حال خراء % % PageV01P059 البحر : - 1(@)(@@) % مولاي رفقا بصب % صدعته بجفائك % % 2(@)(@@) % لا تكسرن إناء % ملآنة بولائك % % PageV01P060 البحر : - 1(@)(@@) % لا ونعماك لم يكن سبب التأ % % خير قصدي ولم يكن عن رجائي % % 2(@)(@@) % انما كان هيضة حققت لي % % أن حالي في البعد حال خراء % PageV01P061 البحر : - 1(@)(@@) % هنأت منزلك الذي قد زخرفت % % جنباته وعلا به استعلاء % 2(@)(@@) % أحسن بها فوارة وجوانبا % سال النضار بها وقام الماء % PageV01P062 البحر : - 1(@)(@@) % بالغت في شجني وفي تعذيبي % % ومع الأذى أفديك من محبوب % % 2(@)(@@) % ياقاسيا هلا تعلم قلبه % لين الصبا من جسمه المشروب % % 3(@)(@@) % آها لورد فوق خدك أحمر % % لو أن ذاك الورد كان نصيبي % % 4(@)(@@) % ولواحظ ترث الملاحة في الظبا % % إرث السماحة في بني أيوب % % 5(@)(@@) % فتحت بنو أيوب أبواب الرجا % % وأتت بحارهمو بكل عجيب % % 6(@)(@@) % وبملكهم رفع الهدى أعلامه % وحمى سرادق بيته المنصوب % % 7(@)(@@) % وإلى عمادهم انتهت علياؤهم % % وإلى العلاء قد انتهت لنجيب % % 8(@)(@@) % ملك بأدنى سطوه ونواله % % أنسى ندى هرم وبأس شبيب % % 9(@)(@@) % الجود ملء مطامع والعلم مل % % ء مسامع والعز ملء قلوب % % 10(@)(@@) % ألفت بأنبوب اليراعة والقنا % % يمناه يوم ندى ويوم حروب % % PageV01P063 11(@)(@@) % فاذا نظرت وجدت أرزاق الورى % % ودم العداة يفيض من أنبوب % % 12(@)(@@) % كم مدحة لي صغتها وأثابها % % فزهت على التفضيض والتذهيب % % 13(@)(@@) % وتعودت في كل مصر عنده % % مرعى يقابل جدبها بخصيب % % 14(@)(@@) % يارب بشر منه طائي الندى % % يلقى مدائحنا لقاء حبيب % % PageV01P064 البحر : - 1(@)(@@) % ماضر من لم يجد في الحب تعذيبي % % لو كان يحمل عني هم تأنيبي % % 2(@)(@@) % أشكو إلى الله عذالا أكابدهم % % وما يزيدون قلبي غير تشبيب % % 3(@)(@@) % وخاطر خنث الأشواق تعجبه % سوالف الترك في عطف الاعاريب % % 4(@)(@@) % كأنني لوجوه الغيد معتكف % ما بين أصداغ شعر كالمحاريب % % 5(@)(@@) % كأنني الشمع لما بات مشتعل ال % % فؤاد قال لأحشائي الأسى ذوبي % % 6(@)(@@) % لا يقرب الصبر قلبي أو يفارقه % % كأنه المال في كف 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms15# بن أيوب % % 7(@)(@@) % لولا ابن أيوب ما سرنا لمغترب % في المكرمات ولا فزنا بمرغوب % % 8(@)(@@) % دعا المؤيد بالترغيب قاصده % فلو تأخر لاستدعي بترهيب % % 9(@)(@@) % ملك اذا مر يوم لا عفاة به % % فليس ذلك من عمر بمحسوب % % 10(@)(@@) % للجود والعلم أقلام براحته % تجري المقاصد منها تحت مكتوب % % PageV01P065 11(@)(@@) % مجموعة فيه أوصاف الأولى سلفوا % % كما تترجم أخبار بتبويب % % 12(@)(@@) % اذا تسابق للعلياء ذو خطر % سعى فأدرك تبعيدا بتقريب % % 13(@)(@@) % وإن أمال إلى الهيجاء سمرقنا % % أجرى دماء الأعادي بالانابيب % % 14(@)(@@) % قد أقسم الجود لا ينفك عن يده % % إما لعافيه أو للنسر والذيب % % 15(@)(@@) % أما حماه فقد أضحى بدولته % ملاذ كل قصي الدار محروب % % 16(@)(@@) % غريبة الباب تقري من ألم بها % % فخل بغداد واترك بابها النوبى % % 17(@)(@@) % وانعم بوعد الأماني عند رؤيته % فان ذلك وعد غير مكذوب % % 18(@)(@@) % واعجب لا يدي جواد قط ماسئمت % % ان البحار لآباء الاعاجيب % % 19(@)(@@) % كل العفاة عبيد في صنايعه % % ودار كل عدو دار ملحوب % % 20(@)(@@) % يا مانحي مننا من بعدها منن % كالماء يتبع مسكوبا بمسكوب % PageV01P066 21(@)(@@) % من كان يلزم ممدوحا على غرر % فما لزمتك الا بعد تجريب % % 22(@)(@@) % أنت الذي نبهت فكري مدائحه % ودربتني والاشيا بتدريب % % 23(@)(@@) % حتى أقمت قرير العين في دعة % وذكر مدحك في الآفاق يسرى بي % % 24(@)(@@) % مدح بغار لمسود المداد به % حمر الحلى والمطايا والجلابيب % % PageV01P067 البحر : - 1(@)(@@) % عوض بكأسك ما أتلفت من نشب % % فالكأس من فضة والراح من ذهب % % 2(@)(@@) % واخطب إلى الشرب أم الدهر ان نسبت % % أخت المسرة واللهو ابنة العنب % 3(@)(@@) % غراء حالية الأعطاف تخطر في % % ثوب من النور أو عقد من الحبب % % 4(@)(@@) % عذراء تنجز ميعاد السرور فما % % تومى إليك بكف غير مختضب % % 5(@)(@@) % مصونة تجعل الأستار ظاهرة % وجنة تتلقى العين باللهب % % 6(@)(@@) % لو لم يكن من لقاها غير راحتنتا % % من حرفة المتعبين العقل والادب % % 7(@)(@@) % فهات واشرب إلى أن لا يبين لنا % % أنحن في صعد نستن أم صبب % % 8(@)(@@) % خفت فلو لم تدرها كف حاملها % % دارت بلا حامل في مجلس الطرب % % 9(@)(@@) % يا حبذا الراح للأرواح سارية % تقضي بسعد سراها أنجم الحبب % % 10(@)(@@) % من كف أغيد تروي عن شمائله % % عن خده المشتهى عن ثغره الشنب % % PageV01P068 11(@)(@@) % علقته من بني الاتراك 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms16# مقتربا % من خاطري وهو مني غير مقترب % % 12(@)(@@) % حمالة الحلى والديباج قامته % % تبت غصون الربا حمالة الحطب % % 13(@)(@@) % يا تالي العذل كتبا في لواحظه % % السيف أصدق أنباء من الكتب % % 14(@)(@@) % كم رمت كتم الجوى فيه فنم به % % إلى الوشاة لسان المدمع السرب % % 15(@)(@@) % جادت جفوني بمحمر الدموع له % جود المؤيد للعافين بالذهب % % 16(@)(@@) % شادت عزائم إسماعيل فاتصلت % % قواعد البيت ذي العلياء والرتب % % 17(@)(@@) % ملك تدلك في الجدوى شمائله % على شمائل آباء له نجب % 18(@)(@@) % محجب العز عن خلق تحاوله % % وجود كفيه باد غير محتجب % % 19(@)(@@) % قد أتعب السيف من طول القراع به % % فالسيف في راحة منه وفي تعب % % 20(@)(@@) % هذا للحلم معنى في خلائقه % لا تستطيل إليه سورة الغضب % % PageV01P069 21(@)(@@) % يغضي عن السبب المردي بصاحبه % % عفوا ويعطي العطا جما بلا سبب % % 22(@)(@@) % ويحفظ الدين بالعلم الذي اتضحت % % ألفاظه فيه حفظ الأفق بالشهب % % 23(@)(@@) % يمم حماه تجد عفوا لمقترف % مالا لمفتقر جاها لمقترب % % 24(@)(@@) % ولا تطع في السرى والسير ذا عذل % واسجد بذاك الثرى الملثوم واقترب % % 25(@)(@@) % وعذ من الخوف والبؤسى بذي همم % للمدح مجتلب للذم مجتنب % % 26(@)(@@) % ذاك الكريم الذي لو لم يجد لكفت % % مدائح فيه عند الله كالقرب % % 27(@)(@@) % نوع من الصدق مرفوع المنار غدا % % في الصالحات من الأعمال في الكتب % % 28(@)(@@) % وواهب لو غفلنا عن تطلبه % % لجاءنا جوده الفياض في الطلب % % 29(@)(@@) % أسدى الرغائب حتى ما يشاركه % في لفظها غير هذا العشر من رجب % % 30(@)(@@) % واعتاد أن يهب الآلاف عاجلة % % وان سرى لألوف الجيش لم يهب % PageV01P070 31(@)(@@) % كم غارة عن حمى الاسلام كفكفها % % بالضرب والطعن أو بالرعب والرهب % % 32(@)(@@) % وغاية جاز في آفاقها صعدا % كأنما هو والأسراع في صبب % % 33(@)(@@) % و مزمل ينظر الدنيا على ظمإ % % منها ويطوي الحشا ليلا على سغب % % 34(@)(@@) % نادته أوصافه اللاتي قد اشتهرت % % لم القعود على غير الغنى فثب % % 35(@)(@@) % فقام يعمل بين الكثب ناجية % كأنما احتملت شيئا من الكتب % % 36(@)(@@) % حتى أناخت بمغناه فقال لها % % ياوصلة الرزق هذي فرقة التعب % % 37(@)(@@) % لاعيب في ذلك المغنى سوى كرم % % يسلو عن الأهل فيه كل مغترب % % 38(@)(@@) % كم ليلة قال لي فيها ندى يده % % يا أشعر العرب امدح أكرم العرب % % 39(@)(@@) % فصبحته قوافي 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms17# التي بهرت % بخرد مثل أسراب المها عرب % % 40(@)(@@) % ألبسته وشيها الحالي وألبسني % % نواله وشي أثواب الغنى القشب % PageV01P071 41(@)(@@) % فرحت أفخر في أهل القريض به % وراح يفخر في أهل السيادة بي % % 42(@)(@@) % ياابن الملوك الأولى لولا مهابتهم % % وجودهم لم يطع دهر ولم يطب % % 43(@)(@@) % الجائدين بما نالت عزائمهم % % والطاعنين الأعادي بالقنا السلب % 44(@)(@@) % والشائدين على كيوان بيت على % % تغيب زهر الدراري وهو لم يغب % % 45(@)(@@) % بيت من الفخر شادوه على عمد % وبالمجرة مدوه على طنب % % 46(@)(@@) % لله أنت فما تصغي إلى عذل % % يوم النوال ولا تلوي على نشب % % 47(@)(@@) % أنشأت للشعر أسبابا يقال بها % % وهل تنظم أشعار بلا سبب % % 48(@)(@@) % أنت الذي أنقذتني من يدي زمني % % يداه من بعد اشرافي على العطب % % 49(@)(@@) % أجابني قبل أن ناديت جودك إذ % % ناديت جود بني الدنيا فلم يجب % % 50(@)(@@) % فإن يكن بعض امداح الورى كذبا % فان مدحك تكفير من الكذب % % PageV01P072 البحر : - 1(@)(@@) % عجبت خلتي لو خط مشيبي % % في أوان الصبى وغير عجيب % % 2(@)(@@) % من يعم في بحار همي يظهر % % زبد فوق فرعه الغربيب % % 3(@)(@@) % من يحارب حوادث الدهر يخفى % % لون فؤديه في غبار الحروب % % 4(@)(@@) % أي فرع جون على عنت الايا % % م يبقى وأي غصن رطيب % % 5(@)(@@) % لو همي ماء معطفي في الل % % ن لأفننته مهجتي بلهيب % % 6(@)(@@) % رب يوم لو لم أخف فيه عقبى % % سوء حالي لخفت عقبى ذنوبي % % 7(@)(@@) % ظاهر دون باطن مستجار % % ليت حالي يكون بالمقلوب % % 8(@)(@@) % منعتني الدنيا جنى فتزهد % % ت ولكن تزهد المغلوب % % 9(@)(@@) % ووهت قوتي فأعرضت كرها % عن لقاء المكروه والمحبوب % % 10(@)(@@) % ما أرى الدهر غيرنا زهد الأف % % ضل والحال ممكن المطلوب % % PageV01P073 11(@)(@@) % ملك في حمى الشبيبة والم % % لك له من دنياه زاد الغريب % % 12(@)(@@) % دبر الملك بالتقى فكساه الل % % ه فيه ثوب المرجى المهيب % % 13(@)(@@) % بين سجادة وبين كتاب % % وسواه ما بين كأس وكوب % % 14(@)(@@) % ينشر العدل أو يبث العطايا % % فهو زاكي الترغيب والترهيب % % 15(@)(@@) % وله فوق أدهم الليل تسري % % دعوات خفيفة المركوب % % 16(@)(@@) % جل من صبر التقى فيه خلقا % قبل خلق التدريج والتدريب % % 17(@)(@@) % والمعالي في آل أيوب إرث % % كالنبوات في بني يعقوب % % 18(@)(@@) % حبذا من ملوكهم كل نسل % % بين محرابه وبين الحروب % % 19(@)(@@) % وسقى الله 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms18# أصلهم فلقد أثم % % ر من نسله بكل نجيب % % 20(@)(@@) % كم قصدنا محمدا فحمدنا % % شادوي الفخار والتهذيب % % PageV01P074 21(@)(@@) % كم مدحنا منه نسيبا فجئنا % % بمديح مكمل ونسيب % % 22(@)(@@) % كم له في حماه نفحة غيث % % شملت في البلاد كل جديب % % 23(@)(@@) % كم له عزمة إلى أرض مصر % % بشرت عام وفدها بخصيب % % 24(@)(@@) % كم أشاع الاعداء أمرا فرد الل % % ه ما شنعوا بلطف عجيب % % 25(@)(@@) % يا مليكا له صنائع بر % وتقى يدفعان صدر الخطوب % % 26(@)(@@) % إبق ماشئت كيف شئت ودوموا % % في حمى الله يا بني أيوب % % 27(@)(@@) % إن قلبي لكم لكا لكبد الح % % ري وقلبي لغيركم كالقلوب % % 28(@)(@@) % ها كها أستقي من البحر منها % % وابن قادوس يستقي من قليب % % 29(@)(@@) % كل شعب أنتم به آل شاد % فهو شعبي وشعب كل أديب % % PageV01P075 البحر : - 1(@)(@@) % تجني لواحظه علي وتعتب % % بالروح يفدى الظالم المتغضب % % 2(@)(@@) % آها له خد مشرق % % ما دونه لعديم لب مذهب % % 3(@)(@@) % متلون الأخلاق مثل مدامعي % % والقلب مثل خدوده متلهب % % 4(@)(@@) % يعطو كما يعطو الغزال لعاشق % % ويروغ عنه كما يروغ الثعلب % % 5(@)(@@) % تفاح خديه بقتلي شامت % % فلأجل ذا يلقاك وهو مخضب % % 6(@)(@@) % لي بالأماني في لماه وخده % في كل يوم منزه أو مشرب % % 7(@)(@@) % أأروم عنه رضاع كاس مسليا % لاأم لي ان كان ذاك ولا أب % % 8(@)(@@) % لافرق عندي بين وصف رضابه % % ومدامه إلا الحلال الطيب % % 9(@)(@@) % واصبوتي بشذا لماه كأنه % % نفس لمادح آل شاد مطرب % % 10(@)(@@) % الشائدين الملك بالهمم التي % % وقف السهى ساه لها يتعجب % % PageV01P076 11(@)(@@) % والقابلين بجودهم سلع الثنا % % فإلى سوى أبوابهم لا تجلب % % 12(@)(@@) % والماكين رقابنا بصنائع % % سبقت مطامعنا فليست ترقب % % 13(@)(@@) % جادت ثرى الملك المؤيد ديمة % وطفاء مثل نواله تتصبب % % 14(@)(@@) % ورعى المقام الأفضلي بمدحه % % فضل يشرق ذكره ويغرب % % 15(@)(@@) % ملك الندى واليأس إما ضيغم % % دامي البواترأو غمام صيب % % 16(@)(@@) % وأبيه ما للسحب مثل بنانه % % وانظر اليها إذ تغيض وتنضب % % 17(@)(@@) % ماسميت بالسحب إلا انها % % في أفقها من خجلة تتسحب % % 18(@)(@@) % لله فضل محمد ماذا على % % أقلامنا تملي علاه وتكتب % % 19(@)(@@) % ذهبت بنو شادي الملوك وأقبلت % % أيامه فكأنهم لم يذهبوا % % 20(@)(@@) % للعلم والنعماء في أبوابه % للطالبين مطالب لا تحجب % % PageV01P077 21(@)(@@) % والله ما ندري اذا ما فاتنا % % طلب إليك من الذي يتطلب 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms19# % % 22(@)(@@) % يا أيها الملك العريق فخاره % % وأجل من يحمي حماه ويرهب % % 23(@)(@@) % اني لمادح ملككم وشبيبتي % % تزهو وها أنا والشباب منكب % % 24(@)(@@) % ولبست أنعمه القشيبة والصبى % % فسلبت ذاك وهذه لا تسلب % % 25(@)(@@) % خذ من ثنائي كالعقود محببا % إن الثناء إلى الكريم محبب % % 26(@)(@@) % من كل مقبلة النظام لمثلها % % نظم الوليد أبي عبيدة أشيب % % 27(@)(@@) % نادت معانيها وقد عارضنه % % عارضتنا أصلا فقلنا الربرب % % PageV01P078 البحر : - 1(@)(@@) % عطفت كأمثال القسي حواجبا % % فرمت غداة البين قلبا واجبا % % 2(@)(@@) % بلواحظ يرفعن جفنا كاسرا % فتثير في الأحشاء هما ناصبا % 3(@)(@@) % ومعاطف كالماء تحت ذوائب % فأعجب لهن جوامد وذوائبا % % 4(@)(@@) % سود الغدائر قد تعقرب بعضها % % ومن الأقارب ما يكون عقاربا % % 5(@)(@@) % من كل ماردة الهوى مصرية % لم تخش من شهب الدموع ثواقبا % % 6(@)(@@) % لم يكف أن شرعت رماح قدودها % % حتى عقدن على الرماح عصائبا % % 7(@)(@@) % أفدي قضيب معاطف ميادة % تجلو علي من اللواحظ قاضبا % % 8(@)(@@) % كانت تساعدني عليه شبيبتي % % حتى نأت فنأى وأعرض جانبا % % 9(@)(@@) % واذا الفتى قطع السنين عديدة % شاب الحياة فظل يدعى شائبا % % 10(@)(@@) % يا أخت أقمار السماء محاسنا % والشمس نورا والنجوم مناسبا % % PageV01P079 11(@)(@@) % ان كابدت كبدي عليك مهالكا % % فلقد فتحت من الدموع مطالبا % % 12(@)(@@) % كالتبر سيالا فلا أدري به % % جفني المسهد سابكا أم ساكبا % % 13(@)(@@) % كاتمت أشجاني وحسبي بالبكا % % في صفح خدي للعواذل كاتبا % % 14(@)(@@) % دمعي مجيب حالتي مستخبرا % لله دمعا سائلا ومجاوبا % % 15(@)(@@) % وعواذلي عابوا عليك صبابتي % % وكفاهم جهل الصبابة عائبا % % 16(@)(@@) % ما حسن يوسف عنك بالنائي ولا % % دم مهجتي بقميص خدك كاذبا % % 17(@)(@@) % بأبي الخدود العاريات من البكى % % اللابسات من الحرير جلاببا % % 18(@)(@@) % النابتات بأرض مصر أزاهرا % والزاهرات بأرض مصر كواكبا % % 19(@)(@@) % آها لمصر وأين مصر وكيف لي % % بديار مصر مراتعا وملاعبا % % 20(@)(@@) % حيث الشبيبة والحبيبة والوفا % % في الأعربين مشاربا وأصاحبا % % PageV01P080 21(@)(@@) % والطرف يركع في مشاهد أوجه % عقدت بها طرر الشعور محاربا % % 22(@)(@@) % والدهر سلم كيف ما حاولته % لا مثل دهري في دمشق محاربا % % 23(@)(@@) % هيهات يقربني الزمان اذى وقد % % بلغت شكايتي العلآء الصاحبا % % 24(@)(@@) % أعلا الورى همما وأعدل سيرة % وأعز منتصرا وأمنع جانبا % % 25(@)(@@) % مرآة فضل الله والقوم الأولى % % ملأوا الزمان محامدا ومناقبا % % 26(@)(@@) % الحافظين ممالكا وشرائعا % والشارعين مهابة ومواهبا % % 27(@)(@@) % لا يأتلي منهم 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms20# امام سيادة % من أن يبذ النيرات مراتبا % % 28(@)(@@) % إما بخطي اليراع إذ الفتى % % في السلم أو في الحرب يغدو كاتبا % % 29(@)(@@) % فاذا سخا ملأ الديار عوارفا % واذا غزا ملأ القفار كتائبا % % 30(@)(@@) % فاذا استهل بنفسه وبقومه % % عد لمفاخر وارثا أو كاسبا % % PageV01P081 31(@)(@@) % ابقوا علي وقوضوا فحسبتهم % % وحسبته سيلا طما وسحائبا % % 32(@)(@@) % ذو الفضل قد دعيت رواة فخاره % % في الخافقين دعاءها المتناسبا % % 33(@)(@@) % فالبيت يدعى عامرا والمجد يد % % عى ثابتا والمال يدعى السائبا % % 34(@)(@@) % ما رحبته القائلون مدائحا % إلا وقد شمل الاكف رغائبا % % 35(@)(@@) % نعم المجدد في الهدى أقلامه % أيام ذو الاقلام يدعى حاطبا % % 36(@)(@@) % تخذ المكارم مذهبا لما رأى % % للناس فيما يعشقون مذاهبا % % 37(@)(@@) % وحياطة الملك العقيم وظيفة % و مطالع الشرف المؤيد راتبا % % 38(@)(@@) % والعدل حكما كاد أن لا يغتدي % % زيد النحاة به لعمرو ضاربا % % 39(@)(@@) % والفضل لو سكت الورى لاستنطقت % % غرر الثنا حقبا به وحقائبا % % 40(@)(@@) % واللفظ بين إناءة وإفادة % قسم الزمان فليس يعدم طالبا % % PageV01P082 41(@)(@@) % وعرائس الاقلام واطربي بها % % سود المحابر للقلوب سوالبا % % 42(@)(@@) % المنهبات عيوننا وقلوبنا % % وجناتهن الناهبات الناهبا % % 43(@)(@@) % سحارة تحكي كعوب الرمح في % % روع وتحكي في السرور كواعبا % % 44(@)(@@) % لا تسألن عن طبها متأملا % واسأل به دون الملوك تجاربا % % 45(@)(@@) % يا حافظا ملك الهدى كتابه % سرت صحائفها المليك الكاتبا % % 46(@)(@@) % يا سابقا لمدى العلى بعزائم % % تسري الصبا من خلفهن جنائبا % % 47(@)(@@) % يا فاتحا لي في الورى من عطفه % بابا فما آسى على إغلاق با % % 48(@)(@@) % يا من تملكني الخمول فرده % بسلاح أحرفه فولى هاربا % % 49(@)(@@) % يا معتقا رقي وباعث كتبه % % لله درك معتقا ومكاتبا % % 50(@)(@@) % يا غارسا مني نبات مدائح % % من مثله يجنى الثمار غرائبا % % PageV01P083 51(@)(@@) % إن ناسبت مدحي معاليك التي % % شرفت فان لكل سوق جالبا % % 52(@)(@@) % أهدي المديح على الحقيقة كاملا % % لكمو وأهدي للورى متقاربا % % PageV01P084 البحر : - 1(@)(@@) % لسائل دمعي من هواك جواب % فما ضر أن لو كان منك ثواب % % 2(@)(@@) % بعيني هلال من جبينك مشرق % وفي القلب من عذل العذول شهاب % % 3(@)(@@) % لئن كان من جنس الخطا لك نسبة % فإن شفائي في هواك صواب % % 4(@)(@@) % وإن كان في تفاح خديك محبتي % % ففي الريق من تفاحهن شراب % % 5(@)(@@) % وإن كنت مجنونا بعشقك هائما % فاني بنبل 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms21# المقلتين مصاب % % 6(@)(@@) % تعبر عن وجدي سطور مدامعي % % كأنك يا خدي لهن كتاب % % 7(@)(@@) % اذا كان يعزى لابن مقلة خطها % % فما منهما للقارئين عجاب % % 8(@)(@@) % على ضيق العينين تسفح مقلتي % % ويطربني لا زينب ورباب % % 9(@)(@@) % فيا رشأ الأتراك لا سرب عامر % فؤادي من سكنى السلو خراب % % 10(@)(@@) % بوجهك من ماء الملاحة مورد % لظام وسرب العامري سراب % % PageV01P085 11(@)(@@) % اذا زرتني فالروح والمال هين % وكل الذي فوق التراب تراب % % 12(@)(@@) % سقى الله عهدي بالحبيب وبالصبا % % سحابا كأن الودق فيه حباب % % 13(@)(@@) % فقدت الهوى لما فقدت شبيبتي % % وأوجع مفقود هوى وشباب % % 14(@)(@@) % وكان يصيد الظبي فاحم لمتي % % وأغرب ما صاد الظباء غراب % % 15(@)(@@) % ولو كنت من أهل المداجاة في الهوى % % لكان بدمعي للمشيب خضاب % % 16(@)(@@) % واني لممن زاد في الغي سعيه % وطول حتى آن منه متاب % % 17(@)(@@) % إلهي في حسن الرجا لي مذهب % % وقد آن للراجي اليك ذهاب % % 18(@)(@@) % أغثني فان العفو لي منك جنة % وغثني فان اللطف منك سحاب % % 19(@)(@@) % وأيد أيادي ابن الخليفة إنها % % اذا زهدت فينا الكرام رغاب % % 20(@)(@@) % أيادي علي رحمة الله في الورى % % فأن يبغ باغيهم فهن عذاب % % PageV01P086 21(@)(@@) % علي الذرى والاسم والنسب الذي % % يعنعن للخطاب فيه خطاب % % 22(@)(@@) % فيا لك من بيت علي قد اعتلت % % به فوق أكتاف النجوم قباب % % 23(@)(@@) % من القوم في بطحاء مكة منزل % لهم وفنا حول الشعاب شعاب % % 24(@)(@@) % حمت عقدة الاسلام بدأ وعودة % كتيبة ملك منهمو وكتاب % % 25(@)(@@) % فكم مرة باتوا لحرب فجدلوا % % وعادوا إلى نادي الندى فأثابوا % % 26(@)(@@) % بألسن نيران لهم وقواضب % اذا ما دعوا نادي النداء أنابوا % % 27(@)(@@) % وأقلام عدل في بحور أنامل % لهم بين أمواج الدروع عباب % % 28(@)(@@) % مضى عمر الفاروق وهي كما ترى % % غصون بأوطان الملوك رطاب % % 29(@)(@@) % فأحسن بها في راحة علوية % كما افتر عن لمع البروق سحاب % % 30(@)(@@) % تواتر لفظا كالجمان سحابه % على جانب الملك العقيم سحاب % % PageV01P087 31(@)(@@) % ينقب عن رأي بها وفواضل % سفير عن المعنى الخفي نقاب % % 32(@)(@@) % مهيب الشظا يخشى صرير يراعه % ظبا البيض حتى لا يطن ذباب % % 33(@)(@@) % فياليت يحيى الآن يحيى فيجتني % % محاسن منها خيله وشباب % % 34(@)(@@) % وكاتب سر للملوك محجب % % وما للندى عن زائريه حجاب % % 35(@)(@@) % عطارد دهم المشتري غير خاسر 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms22# % إذا بيع حمد في الورى وثواب % % 36(@)(@@) % وذوا القلم الماضي الثنا فكأنما % % له السيف من فرط المضاء قراب % % 37(@)(@@) % موارده شهد اذا شيم بره % % وإن شيم حرب فالموارد صاب % % 38(@)(@@) % تخاف وترجى يا مسطر كتبه % كأنك روض أو كأنك غاب % % 39(@)(@@) % كذا يا ابن فضل الله تدعو لملكها % % ملوك إذا شاموا الظنون أصابوا % % 40(@)(@@) % فريد العلى هل أنت مصغ لناظم % فريد الثنا كالتبر ليس يعاب % % PageV01P088 41(@)(@@) % لأعرض عن رجواي عطفك مرة % فأعرض عني سادة وصحاب % % 42(@)(@@) % وأوهمني حرمانهم لي حاجة % أهب لأشكو حرها فأهاب % % 43(@)(@@) % وكابدت في المثنى من العرب مشتكى % % كما قيل لم تلبس عليه ثياب % % 44(@)(@@) % واني وان شيبت حياتي وأعرضوا % % وحقك مالي غير بابك باب % % 45(@)(@@) % فليتك تحلو والحياة مريرة % وليتك ترضى والأنام غضاب % % 46(@)(@@) % وحقك ما حقي سوى الصبح نير % ولكنما حظي عليك ضباب % % 47(@)(@@) % يغني بمدحي فيك حاد وسامر % فطابت عليه رحلة وإياب % % 48(@)(@@) % وأنت الذي أنطقتني ببدائع % % بغيظ أناس قد ظفرت وخابوا % % 49(@)(@@) % فما النظم إلا ما أحرر فاتن % وما البيت إلا ما سكنت يباب % % 50(@)(@@) % اليك النهى قولي لمن قال ملجم % وخف له في الخافقين ركاب % % PageV01P089 51(@)(@@) % فدونك منه كل سيارة لها % % مقر على أفق السها وجناب % % 52(@)(@@) % علا فوق عرنين الغزالة كعبها % % وزاحمت الستين وهي كعاب % % 53(@)(@@) % ودم يامديد الفضل منشرح الندى % % على الخلق لا يفنى لديك طلاب % % 54(@)(@@) % تهنيك بالأعوام مذهبة الحلى % % على اليمن منها جبة وإهاب % % 55(@)(@@) % لها من هلال في العدا حد خنجر % وفي الرفد من نوع الزكاة نصاب % % PageV01P090 البحر : - 1(@)(@@) % أبث صريح المدح أخرج فيه من % % قشوري فيأتي المدح فهو لباب % % 2(@)(@@) % تجوب أماديحي بذكرك في العلا % % وأدعية تحت الظلام تجاب % % PageV01P091 البحر : - 1(@)(@@) % سد ياعلي فلا نكرا ولا عجبا % % واعقد لبيتك في نجم السما طنبا % % 2(@)(@@) % وافخر على الناس نفسا بالعلى شرفت % % كما فخرت عليهم قبل ذاك أبا % % 3(@)(@@) % أما القريض فقد أنفقت كاسده % % حتى جعلت له بين الورى سببا % % 4(@)(@@) % يقوله وندى علياك يمطره % كأنك البحر يحبى بعض ما وهبا % % 5(@)(@@) % شكرا لها من معان فيك طالعة % % لو أن طالعها للنجم ما غربا % % 6(@)(@@) % مستلمح حسنها في عين ناظره % هذا على أنه في الذوق قد 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms23# عذبا % % 7(@)(@@) % وغادة من بنات الفكر سافرة % ولو تحجب ذاك النور ما حجبا % % 8(@)(@@) % غريبة اللفظ ان جال اليراع بها % % على الطروس رأيت البان والعذبا % % 9(@)(@@) % تذكرت عهد جيران لها فشدت % فيهم بأعبق نشر من نسيم صبا % % 10(@)(@@) % ورق معنى حديث فهو حينئذ % دمع جرى فقضى في الربع ما وجبا % % PageV01P092 11(@)(@@) % لم أنس ألسنة الاحوال قائلة % عوذ بياسين حسنا للعقول سبا % % 12(@)(@@) % وامدح عذوبة ألفاظ مشعشعة % % قد استوى عن ذكاها الماء والتهبا % % 13(@)(@@) % بعدت عن باب منشيها فوا أسفا % وواصلتني على بعد فوا طربا % % 14(@)(@@) % من لي بقبلة ذاك الباب تأدية % فأغتدي ساجد الامداح مقتربا % % 15(@)(@@) % يا كاتبا تب مسعى من يناضله % فراح يحمل من أقلامه حطبا % % 16(@)(@@) % حلفت أنك أذكى من حوى قلما % تنشي البديع وأنحى من نحا أدبا % % 17(@)(@@) % ألية لو أتاها الفجر ما نسبت % % له البرية في ذيل الدجى كذبا % % PageV01P093 البحر : - 1(@)(@@) % أذكى سنا البرق في أحشائه لهبا % % وجاذبته يد الاشواق فانجذبا % % 2(@)(@@) % واستخرج الحب كنزا من محاجره % % فقام يبكي على أحبابه ذهبا % % 3(@)(@@) % صب يرى شرعة في الحب واضحة % فما يبالي إذا قال الوشاة صبا % % 4(@)(@@) % نحا الهوى فكره العاني فصيره % بعامل القد لا ينفيك منتصبا % 5(@)(@@) % مقسم الدمع والأهواء تحسبه % % بين الصدود وبين النأي منتهبا % % 6(@)(@@) % ذو وجنة بمجاري الدمع قد قرحت % % و خاطر بجناح الشوق قد وجبا % % 7(@)(@@) % كأن مهجته ملته فاتخذت % % سبيلها عنه في بحر البكى سربا % % 8(@)(@@) % يا ساري البرق في آفاق مصر لقد % % أذكرتني من زمان النيل ماعذبا % % 9(@)(@@) % حدث عن البحر أو دمعي ولاحرج % و انقل عن النار أو قلبي ولا كذبا % % 10(@)(@@) % و اندب على الهرم الغربي لي عمرا % فحبذا هرم فارقته وصبا % % PageV01P094 11(@)(@@) % و قبل الارض في باب العلاء فقد % % حكيت من أجل هذا الثغر والشبنا % % 12(@)(@@) % و اهتف بشكواي في ناديه ان به % في المكرمات غريبا يرحم الغربا % % 13(@)(@@) % هذا الذي إن دعا الاقران فكرته % قالت عزائمه ليس العلى لعبا % % 14(@)(@@) % و في الكتابة في علم وفي عمل % هذا وعارضه في الخد ما كتبا % % 15(@)(@@) % و جانست فضل مرباه فضائله % فراح في حالتيه يتقن الأدبا % % 16(@)(@@) % ذو البيت إن حدثت عنه العلى خبرا % % جاءت 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms24# باسنادها عنه أبا فأبا % % 17(@)(@@) % بيت أفاعيله في الفضل وازنة % فما تراه غداة المدح مضطربا % % 18(@)(@@) % لذت مناسبه في لفظ ممتدح % % حتى حسبنا نسيبا ذلك النسبا % % 19(@)(@@) % و طالع الفكر من أبنائه سيرا % فما رأى غير أبناء من النجبا % % 20(@)(@@) % يقفو أخ في المعالي والعلوم أخا % فيطلع الكل في آفاقها شهبا % % PageV01P095 21(@)(@@) % من كل ذي قلم أمست مضاربه % % سيفا لدولة ملك يدفع النوبا % % 22(@)(@@) % أما ترى بعلي مصر فارحة % % فلا عليا فقدناه ولا حلبا % % 23(@)(@@) % مهدي المقال لا سماع الورى دررا % % و ممطر الجود في أيديهمو ذهبا % % 24(@)(@@) % يصبوا اذا نطق الصابي ويرمقه % % طرف ابن مقلة بالاجلال ان كتبا % % 25(@)(@@) % لم أنس لم أنس من أنشائه سحبا % بآية النظم يتلو قبلها سحبا % % 26(@)(@@) % مرت بلفظ فتي الروم قائلة % % ما تطلب الروم ممن أعجز العربا % % 27(@)(@@) % لو أن فحل كليب شام بارقها % % أمسى يلف على خيشومه الذنبا % % 28(@)(@@) % تلك التي بلغت في الحسن غايته % % و لم تدع لنفيس بعدها رتبا % % 29(@)(@@) % حتى اغتدى الدر في أسلاكه صدفا % و المندل الرطب في أوطانه حطبا % % 30(@)(@@) % و طارحتني وشيبي شاغل أذني % % أبعد خمسين مني تبتغي الأدبا % % PageV01P096 31(@)(@@) % يا سيدا سرني مسراه في نهج % % لن يستطيع له ذو فكرة طلبا % % 32(@)(@@) % هذي يديهتك الحسناء ما تركت % % للسحر والنحل لاضربا ولا ضربا % % 33(@)(@@) % متى أشافه هذا اللفظ من كتب % % تملى فاملأ من أوصافه الكتبا % % 34(@)(@@) % شكرا لاقلامك اللاتي جرت لمدى % % في الفضل أبقى لباغي شأوه التعبا % % 35(@)(@@) % حلت وأطربت المصغي وحزت بها % % فضل السباق فسماها الورى قصبا % % PageV01P097 البحر : - 1(@)(@@) % دمعي عليك مجانس قلبي % % فانظر على الحالين للصب % % 2(@)(@@) % يا فاضح الغزلان حيث رنا % % و إذا انثنى يا مخجل القضب % % 3(@)(@@) % لك منزل يغضي جوانحها % % لا بالغضا من جانب الشعب % % 4(@)(@@) % تعفو الرسوم من الديار وما % % تعفو رسوم هواك من قلبي % % 5(@)(@@) % بأبي هلالا شرق طلعته % % يجري مدامعنا من الغرب % % 6(@)(@@) % كسر اللواحظ ناصب فكري % % فضنيت بين الكسر والنصب % % 7(@)(@@) % و سلبت لبي والحشا وجبت % % فعييت بالايجاب والسلب % % 8(@)(@@) % وهويته بالحسن منتقبا % فلي الهنا بمواضع النقب % % 9(@)(@@) % و سنان ينشد سحر مقلته % % أجفان عاشقه الاهبي % % 10(@)(@@) % شقي العذول على محاسنه % % و نعمت في تعذيبه العذب 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms25# % % PageV01P098 11(@)(@@) % فعل العواذل فيه ما اكتسبت % % أيديهمو ولمهجتي كسبي % % 12(@)(@@) % لا توجعوا بملامكم كبدي % % فملامكم ضرب من الضرب % % 13(@)(@@) % يا عاذلين تفرغوا ودعوا % % للعاشقين شواغل الحب % 14(@)(@@) % وذروا لقاء الموجعين فقد % % تعدي الصحاح مبارك الجرب % % 15(@)(@@) % كيف استماعي من حديثكموا % % قشرا وعند معذبي لبي % % 16(@)(@@) % لم أنس اذ وافى يعاتبني % % اشهى معاتبة لذي ذنب % % 17(@)(@@) % ليت الذنوب أطلت شقتها % % كيما يطول شقة العتب % % 18(@)(@@) % في ليل وصل لا رقيب به % % الا الحباب بأكوس الشرب % % 19(@)(@@) % و مديرها قمر منازله % % في الطرف دائرة وفي القلب % % 20(@)(@@) % و بصحن ذاك الخد من قبل % % نقلي ومن رشفاته شربي % % PageV01P099 21(@)(@@) % دهر تولى بالصبي فرطا % ومضى بمن يصبو ومن يصبي % % 22(@)(@@) % لم أقض من امهاله وطري % % وقضيت من اسراعه نحبي % % 23(@)(@@) % ما أنصف الباكي شبيبته % بمدامع كهوامع السحب % % 24(@)(@@) % ذاب السواد من العيون بها % % فالدهر إثر الحمر والشهب % % 25(@)(@@) % و لقد كوى قلبي المشيب فما % % تهفو العوائد بي إلى الحب % % 26(@)(@@) % لاطب بعد وقوعه لهوى % % والكي آخر رتبة الطب % % 27(@)(@@) % في مدح أحمد للفتى شغل % فاخلص لمدح علاه بالوثب % % 28(@)(@@) % ولقد أغب المدح من قصر % عنه ومن خجل ومن رعب % % 29(@)(@@) % حتى دعاه حكم سيده % هوى اللقآء فزار عن غب % 30(@)(@@) % وأقام في أوقات خدمته % فرض الثنا ودعا إلى ندب % % PageV01P100 31(@)(@@) % لاتأس إن فني الكرام وإذ % % وجد ابن يحياها فقل حسبي % % 32(@)(@@) % ساد ابن يحيى في الصبا بثنى % أ سرى به شرقا إلى غرب % % 33(@)(@@) % وسما على السادات كل سما % % بمآثر تربو على الترب % % 34(@)(@@) % فهما ورأيا قد سما وحمى % % وكذا تكون مآثر الشهب % % 35(@)(@@) % متحجبا بضياء سؤدده % ولهاه سافرة بلا حجب % % 36(@)(@@) % يختال بين سيادة خفضت % حقا رؤس العجم والعرب % 37(@)(@@) % ومناسب عمرية نصبت % % درج المفاخر أحسن النصب % % 38(@)(@@) % ومهابة سكن الزمان بها % % عن خائفيه وكان ذا شغب % % 39(@)(@@) % ومكارم من دون غايتها % % خفيت وما بلغت قوى كعب % % 40(@)(@@) % وفضائل وأبيك ماتركت % % للروض غير موارث الأب % PageV01P101 41(@)(@@) % سكب الزمان بها غمائمه % شهدا فيا لحلاوة السكب % % 42(@)(@@) % بين اللطافة والجزالة قد % فاض الزلال بها من الهضب % % 43(@)(@@) % بينا ترى كالقضب رائعة % حتى ترى كوشائع القضب % % 44(@)(@@) % تهوي القلوب لدر منطقها % % في الطرس نحو ملاقط الحب % % 45(@)(@@) % وتريك تأثير الكواكب في 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms26# % % يوم الخطوب وليلة الخطب % % 46(@)(@@) % وأقام سهران اليراع إذا % % ما نام جفن الصارم العضب % % 47(@)(@@) % ومجيب داعي الملك يوم وغى % % بكتائب ينعتن بالكتب % % 48(@)(@@) % ولقد حكى كعب القناة له % قلم فكان مبارك الكعب % % 49(@)(@@) % جم المغازي والصلات فيا % % لحدائق وضراغم غلب % 50(@)(@@) % يروي حديث ثناه عن صلة % ولربما يرويه عن حرب % PageV01P102 51(@)(@@) % فعلت على بعد يراعته % فعل الظبا نشطت من القرب % % 52(@)(@@) % في مصر يذكر بالخصيب وفي % % أفق الشآم ببارق الخصب % % 53(@)(@@) % من كف وضاح الجبين إذا % % لحظ التراب اهتز بالعشب % % 54(@)(@@) % وافى ويوم الشآم ملتبس % وعقارب الظلماء في كثب % % 55(@)(@@) % فمحا بصبح العدل من ظلم % وشفى بأيدي اللطف من كرب % % 56(@)(@@) % ودعا السحاب بيمن طلعته % ولو استغاث دعاه بالسحب % % 57(@)(@@) % ياآل فضل الله مدحكمو % % إلفي القديم وشعبكم شعبي % % 58(@)(@@) % أنتم وقد شهرت مواهبكم % % مأوى المدائح لا بنو وهب % % 59(@)(@@) % أقلامكم للملك حافظة % ونوالكم في المجد للنهب % % 60(@)(@@) % كم سقتمو نجحا إلى طلب % وبعثتموا نصرا إلى طلب % % PageV01P103 61(@)(@@) % وصحبتمو ملكا فما خدعت % % يمناه خدع الآل بالصحب % % 62(@)(@@) % إن ينأ عني باب أحمدكم % % فالآن وافرحاه بالقرب % % 63(@)(@@) % مولاي خذها نظم ذي لسن % % يوم الثناء كلؤلؤ رطب % % 64(@)(@@) % حسناء تعرف من تسير له % فتجد في سهل وفي صعب % % 65(@)(@@) % ألوى بثعلب نقد معربها % % وعلت ذؤابتها على الضبي % % PageV01P104 البحر : - 1(@)(@@) % شب الحشا قول الكواعب شابا % % وآها لهن كواعبا وشبابا % % 2(@)(@@) % ومضى الصبا ومن التصابي بعده % % صيرت للدمع الدماء خضابا % % 3(@)(@@) % هيهات أقصر لهوه وتوزعت % % أوقات من فقد الصبا وتصابا % % 4(@)(@@) % وغضضت جفني عن مغازلة الظبا % % ولقد أجر لبرده أهدابا % % 5(@)(@@) % ولقد أرود الحي خلت رماحه % % دوحا وموقع نبله أعشابا % % 6(@)(@@) % فأدير إما بالمدام مع الدمى % % أو بالدماء مع الكماة شرابا % % 7(@)(@@) % أسد تآلفني الظباء وتختشي % % من صارمي الصقر الغيور ذبابا % % 8(@)(@@) % أيام في ظلي صبا وصبابة % أحبى بألطاف المها وأحابى % % 9(@)(@@) % من كل ناشرة الوفا طائية % قد ناسبت بنوالها الأنسابا % % 10(@)(@@) % غيداء تسفر عن محاسن دمية % حلت بصدغي شعرها محرابا % % PageV01P105 11(@)(@@) % سلبت بمقلتها فؤادا واجبا % حتى عرفت السلب والايجابا % % 12(@)(@@) % إن شئت من كاساتها أو ثغرها % % أرشفت خمرا أو لثمت حبابا % % 13(@)(@@) % أوشئت إن غابت يغيب رقيبها % % فذكرت موصول اللقا وربابا % % 14(@)(@@) % ولهجت بالأغزال أتبع زورها % % صدقا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms27# بمدح ابن النبي منابا % % 15(@)(@@) % واذا الحسين سما له حسن الثنا % % فلقد أطالا مظهرا وأطابا % % 16(@)(@@) % أزكى الورى أصلا وأعلاهم يدا % فرعا وأكرمهم جنى وجنابا % % 17(@)(@@) % وأجل أحسابا فكيف اذا جلت % % سورالكتاب بمدحه أنسابا % % 18(@)(@@) % نجم الفواطم من كرائم هاشم % والمرضعين من الكرام سحابا % % 19(@)(@@) % والخمسة الأشباح نورا قبل ما % % رقم السماك من الدجى جلبابا % % 20(@)(@@) % ذو الفضل لا تحصى مواقع سحبه % % والشخص منفردا يضيء شهابا % % PageV01P106 21(@)(@@) % ومناقب البيت الذي من أفقه % % بدت الكواكب سنة وكتابا % % 22(@)(@@) % وعجائب العلم التي من بحرها % % ماس اليراع بطرسه إعجابا % % 23(@)(@@) % ومحاسن الأقوال والشيم التي % % قسمت لديه وسميت آدابا % % 24(@)(@@) % علوية أوصافها علوية % قد بذت الإيجاز والاسهابا % % 25(@)(@@) % في كفه قلم يخاف ويرتجى % % فيجانس الإعطاء والاعطابا % % 26(@)(@@) % عصمت منافعه العواصم تارة % % شهدا يصوب بها وطورا صابا % % 27(@)(@@) % بسدادة تجلى الخطوب ويجتلى % % صوب الكلام أوانسا أترابا % % 28(@)(@@) % عجبا له مما تضيء سطوره % % سبل الهدى وتحير الألبابا % % 29(@)(@@) % جمدت به سحب الحيا ولوانه % % يوم الوغى لمس الحديد لذابا % % 30(@)(@@) % إن جاد أرضا لفظه فكأنما % % نبتت لسكر عقولنا أعنابا % % PageV01P107 31(@)(@@) % حتى إذا جاءت صواعق رعبه % % أضحى جميع نباتها عنابا % % 32(@)(@@) % لله درك يا حمى حلب لقد % % أمطرت صوب ندائه وصوابا % % 33(@)(@@) % من كل فاتنة الترسل لو بدت % % لنهاك يا عبد الرحيم لغابا % % 34(@)(@@) % ونظيمة درت البداوة أن في % % حضر الممالك عندها أعرابا % % 35(@)(@@) % هشمت فخار العرب هاشم واحتوت % % حتى القريض لنسلها أسلابا % % 36(@)(@@) % قلعت بها أوتاد كل معاند % % وتمسكت هي للسما أسبابا % % 37(@)(@@) % ولمثلها الضليل ضل فكيف لو % % يدعى تكلف بدأة وجوابا % % 38(@)(@@) % ياابن الوصي وصية بمقصر % % من بعد ما جهدت قواه ولابا % % 39(@)(@@) % في نظمه عنكم وخط يراعه % % صغر فلا الفا أجاد ولا با % % 40(@)(@@) % باب البديع فتوحكم وأنا امرؤ % لا طاقة لي في البديع ولا با ع % % PageV01P108 البحر : - 1(@)(@@) % قلب ذلول وغادة صعبه % % كم لك يا دمع صبها صبه % % 2(@)(@@) % أفدي بقلبي المغلوب لاعبة % حالية الوجنتين كاللعبه % % 3(@)(@@) % هيفاء لا ضمة أفوز بها % % إلا اذا النوم كان لي نصبه % % 4(@)(@@) % أعضاي في كسوة السقام بها % % ولمتى في المشيب في شهبه % % 5(@)(@@) % حاول لثمي خيلان وجنتها % % فقال مسكيها ولا حبه % % 6(@)(@@) % قلت وقلبي في الصدغ منتشب % % ألثم قلبي 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms28# قالت فذي نشبه % % 7(@)(@@) % وابتسمت فابتدرت من ظمإي % % فيالها من رضابها شربه % % 8(@)(@@) % ويالها عضبة أثرت بها % % نقطة دمع فأصبحت عضبه % % 9(@)(@@) % وعاتبتني فقلت من أنس % % وقتك لاتجعليه من عتبة % % 10(@)(@@) % فودنا المستقيم يسند عن % سهل فلا تسنديه عن شعبه % % PageV01P109 11(@)(@@) % قالت فخذها تعذيبة لحشى % % فقلت هذي تعذيبة عذبه % % 12(@)(@@) % فقلت مدح العلاء أعذب من % % تغزلي وأقضيتها رتبه % % 13(@)(@@) % ذو العلم والفضل مع شبيبته % % ليس له في سواهما طربه % % 14(@)(@@) % والسؤدد المحض يجتليه على % % عطفيه لحظ النابل الأنبه % % 15(@)(@@) % والحمد والأجر من بضائعه % % فكم له كسبة على كسبه % % 16(@)(@@) % بينا يوفي حقوق مكرمة % % في اليوم أقضى غدا إلى قربه % % 17(@)(@@) % فباب نعماه في الإباحة من % % سهل وباب الأضداد من ضبه % % 18(@)(@@) % كم بسطت راحتاه من أمل % % ونفست بالجميل من كربه % % 19(@)(@@) % كم دلنا بشره على كرم % % وساقنا ذكره إلى رغبه % % 20(@)(@@) % أخلص في حبه ذووا رغب % % واعتدل الرائغون بالرهبة % % PageV01P110 21(@)(@@) % وأوضح الخير في دمشق فتى % % كم قام في الخير قومة غضبه % % 22(@)(@@) % قوم زكا في الأنام أصلهمو % % وفرعهم والغمام والتربه % % 23(@)(@@) % أنصار دين عبية خ % % ير الخلق أهل الإيواء والصحبة % % 24(@)(@@) % أما ترى في دمشق نجلهمو % % قد خطبته أمورها خطبه % % 25(@)(@@) % ما بين معروفها ومنكرها % % نهي وأمر يرضي به ربه % % 26(@)(@@) % مبارك الكعب أن يسر به ال % % شآم فقد سر قومه الكعبه % % 27(@)(@@) % يا كافل الحسبة التي شهدت % % بأنها فوق قدرها رتبة % % 28(@)(@@) % أحسن بها رتبة تكفلها % % من هو بعد البها به أشبه % % 29(@)(@@) % شهادة الفرض في سيادته % % تمت وزادت شهادة الحسبه % % 30(@)(@@) % هنأت علياءها ومثلك من % % به تهنى مطالع الهضبه % % PageV01P111 31(@)(@@) % ومدحة أنت أنت أجدر من % % تحدث للخير قلبها جذبه % % 32(@)(@@) % جآءتك معمول حسبة صنعت % % فيها المعاني حلاوة رطبه % % 33(@)(@@) % يسأل ذاك الكتاب جائزة % % فانني فيه من ذوي الإربه % % 34(@)(@@) % عشقته مع خفا كتابته % فاقبل سؤالي وعدها كتبه % % 35(@)(@@) % وعش مبيحا لكل مطلب % % علما وجودا جاآ على نسبه % % 36(@)(@@) % لم يتقدم دهر الكرام على % % هرك يا سيدي سوى حجبه % % PageV01P112 البحر : - 1(@)(@@) % قدمت قدوم الغيث والحي مجذب % % وعدت كعود البدر والأفق غيهب % % 2(@)(@@) % وسرت بك الأوطان فالغصن شامخ % % دلالاعلى الأنهاروالروض معجب % % 3(@)(@@) % وطابت بك الأرض التي أنت حلها % % وكل مكان ينبت العز طيب 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms29# % % 4(@)(@@) % حلفت بأيام المشاعر من منى % وما ضم فيهن الصفا والمحصب % % 5(@)(@@) % لقد طاف بالأركان ركن سماحة % % يقام به شرع السماح وينصب % % 6(@)(@@) % فلله عين من ثراك تكحلت % % بمجتمع الميلين والرفد يدأب % % 7(@)(@@) % ولما قضيت النسك عاودت طيبة % % وسعيك مبرور وقصدك منجب % 8(@)(@@) % فأقسم ما سر الحطيم ومكة % بأكثر ما سر البقيع ويثرب % % 9(@)(@@) % تيممت منها روضة نبوية % جنيت بها زهر الرضا وهو مخصب % % 10(@)(@@) % وطابت نواحي العرب من بيت حمزة % % وبات الندى من كف حمزة يسكب % % PageV01P113 11(@)(@@) % وعجبت لأوطان الشآم فأشرقت % % كأنك ما بين المنازل كوكب % % 12(@)(@@) % اذا زرت أرضا زال محل ديارها % % وأخرج منها خائفا يترقب % % 13(@)(@@) % فرؤياك رؤيا للسماح صحيحة % % وبابك باب للنجاح مجرب % % 14(@)(@@) % لئن حذر العافون في الدهر مهلكا % % لقد طاب من نعماك للقوم مطلب % % 15(@)(@@) % فكل بنان من نداك مفضض % وكل زمان من صفاك مذهب % % 16(@)(@@) % وكل غمام غير جودك مقلع % % وكل وميض غير برقك خلب % % 17(@)(@@) % وقد يتجافى الغيث عن متطلب % % وغيثك قيد الكف أو هو أقرب % % 18(@)(@@) % وما سمي الغيث الهتون سحابة % % سوى أنه من خجلة يتسحب % 19(@)(@@) % نهضت بما لاتحسن السحب حمله % وسدت على ما أسس الجد والأب % % 20(@)(@@) % وسدت إلى أن سر اسعد في الثرى % % بسؤددك الوضاح بل سر يعرب % % PageV01P114 21(@)(@@) % لك الله ما أزكى وأشرف همة % وأوفق ما تأتي وما تتجنب % % 22(@)(@@) % صرفت اليك القصد عن كل باذل % % وقلت امرؤ بالفضل أدرى وأدرب % % 23(@)(@@) % فرقيت نظمي فوق ما كان ينبغي % % وبلغت ظني فوق ما كان يحسب % % 24(@)(@@) % وصححت أخبار الندى فرويتها % % عوالي تروي كل وقت وتكتب % % 25(@)(@@) % فان علقت كفي بنعماك عروة % % فقد هان من عيشي بيمنك مصعب % % 26(@)(@@) % بقيت لهذا الدهر تحمل صنعه % % و تغفر من زلاته حين يذنب % % 27(@)(@@) % فلولاك ما فازت مدائح شاعر % % و لا أصبحت أوزانها تتسبب % % PageV01P115 البحر : - 1(@)(@@) % ما لمن لام فيكمو من جواب % % غير دمع جفانه كالجوابي % % 2(@)(@@) % يا نزولا على عقاب المصلي % % ما سمعنا بجنة في عقاب % % 3(@)(@@) % أعجز الورق أن تعار دموعي % % فاستعارت على الغصون انتحابي % % 4(@)(@@) % أيها المستعير دمعي مهلا % % ان دمعي كما علمت سكابي % % 5(@)(@@) % حبذا منزلي على السفح قدما % و زماني وجيرتي وشبابي % % 6(@)(@@) % حيث لا واشيا سوى 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms30# عبق الرو % % ض ولا ساعيا سوى الاكواب % % 7(@)(@@) % ذاك ربع عفا على عنت الده % % ر وعيش مضى مع الأحباب % % 8(@)(@@) % ان توارت شمس الضحى فلعمري % % ما توارت شمس العلا بالحجاب % % 9(@)(@@) % أطلع الله للفضائل شمسا % عوض الناس عن ذهاب الشهاب % % 10(@)(@@) % قال ديوانه مقالة صدق % % ان وكر العقاب لابن العقاب % % PageV01P116 11(@)(@@) % أي فرع نما فمد ظلالا % % سابغا ذيلها على الطلاب % % 12(@)(@@) % وافر المكرمات منشرح اللف % % ظ طويل الثنا مديد الثواب % % 13(@)(@@) % يلتقى المادحين بالخير في مذ % % هبة والعفاة بالإكتساب % % 14(@)(@@) % رافعا بالتواضع الحجب عنه % % و هو من نور غرة في حجاب % % 15(@)(@@) % حملت كفه اليراع فقلنا % % حبذا البرق لامعا في السحاب % % 16(@)(@@) % ياله من يراع فضل وفيض % % سالك دهره طريق الصواب % % 17(@)(@@) % وفر السمر عن خصام الأعادي % % و كفى المرهفات طول الضراب % % 18(@)(@@) % فهو كالصل في الدماغ ولكن % % كم شفانا من رشفه من رضاب % % 19(@)(@@) % تارة يسفح الدماء على التر % % ب وأخرى يدير صفو الشراب % % 20(@)(@@) % كالعصا في يد الكليم وفيها % % لحمى الملك غاية الآراب % % PageV01P117 21(@)(@@) % شملتنا جدواه الوقت جدب % % فاستلانت ومعطف الدهر آبي % % 22(@)(@@) % ما سرى في الكتاب إلا وأضحى % % شغب الدهر آمنا بالكتاب % % 23(@)(@@) % يا رئيسا به لقد أدب الده % % ر الذي قد جنى على الآداب % % 24(@)(@@) % كيف يقضي شكري حقوق أياد % % يك وأدنى نوالها قد طغا بي % % 25(@)(@@) % كيف أحصي حسابها وهي تبدي % % كل وقت ما لم يكن في الحساب % % 26(@)(@@) % لاعدت بابك السعود فقد أض % % حى لوفد الأشعار أنجح باب % % 27(@)(@@) % سببت نظمنا لهاه ولا بد % لنظم القريض من أسباب % % PageV01P118 البحر : - 1(@)(@@) % على اليمين والنعمى ليال تبسمت % % تبسم ثغر القطر عن لعس السحب % % 2(@)(@@) % و أحيت لشرق الشام وقت مسرة % يصد كرى الاجفان فيه عن الغرب % % 3(@)(@@) % فلله أفراح سعت لسرورها % % و محفلها أهل الكتائب والكتب % % 4(@)(@@) % وطيب أغان رنحتنا كأنها % % تدور بجامات الدفوف على شرب % % 5(@)(@@) % و إيلام حساد وفضل وليمة % % كذلك فليولم أخو السعد والخصب % % 6(@)(@@) % يسر فؤادي ما بلغت وان يكن % % سيسلو بأهل البيت عن رؤية الصحب % % 7(@)(@@) % و حاشاك أن يسليك شيء عن العلى % % وعن طالبي جدواك في والبعد القرب % % 8(@)(@@) % الست من القوم الذين أكفهم % % و أحلامهم كالماء للأرض والهضب 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms31# % % 9(@)(@@) % نزلت على أفضالهم فكأنما % % نزلت على آل المهلب في الحدب % % 10(@)(@@) % و قد كان لي عتب على الدهر والورى % % فلما تلاقينا عتبت على العتب % % PageV01P119 11(@)(@@) % فلا زال قطب الدين واسطة لهم % % و بدر على بين الفراقد والشهب % % 12(@)(@@) % يدور على علياه حسن رجائنا % % ولا غرو إن صح المدار على القطب % % PageV01P120 البحر : - 1(@)(@@) % نعاه للفضل والعلياء والنسب % % ناعيه للأرض والأفلاك والشهب % % 2(@)(@@) % ندبا وشرعا وجوب الحزن حين مضى % % فأي حزن وقلب فيه لم يجب % % 3(@)(@@) % نعم إلى الأرض ينعى والسماء على % % فقيدكم يا سراة المجد والحسب % % 4(@)(@@) % بالعلم والعمل المبرور قد ملئت % % أرض بكم وسماء عن أب فأب % % 5(@)(@@) % مقدم ذكر ماضيكم ووارثه % % في الوقت تقديم بسم الله في الكتب % % 6(@)(@@) % آها لمجتهد في العلم يندبه % % من بات مجتهدا في الحزن والحرب % % 7(@)(@@) % بينا وفود الندى منهلة مننا % إذا نازلتنا الليالي فيه عن كثب % % 8(@)(@@) % و أقبلت نوب الأيام ثائرة % إذ كان عونا على الأيام والنوب % % 9(@)(@@) % ففاجأتنا يد التفريق مسفرة % عن سفرة طال فيها شجو مرتقب % % 10(@)(@@) % و جاءنا عن إمام مبتدا خبر % لكن به السمع منصوب على النصب % % PageV01P121 11(@)(@@) % قالت دمشق بدمع النهر واخبرا % فزعت فيه بآمالي إلى الكذب % % 12(@)(@@) % حتى إذا لم يدع لي صدقه أملا % شرقت بالدمع حتى كاد يشرق بي % % 13(@)(@@) % و كلمتنا سيوف الكتب قائلة % ما السيف أصدق أنباء من الكتب % % 14(@)(@@) % و قال موت فتى الانصار مغتبطا % الله اكبر كل الحسن في العرب % % 15(@)(@@) % لقد طوى الموت من ذاك الفرند حلى % % كانت حلى الدين والأحكام والرتب % % 16(@)(@@) % و خص مغنى دمشق الحزن متصلا % بفرقتين أباتتها على وصب % % 17(@)(@@) % كادت رياح الأسى والحزن تعكسها % % حتى الغصون بها معكوسة العذب % % 18(@)(@@) % و الجامع الرحب أضحى صدره حرجا % والنسر ضم جناحيه من الرهب % % 19(@)(@@) % و للمدراس هم كاد يدرسها % % لولا تدارك أبناء له نجب % % 20(@)(@@) % من للهدى والندى لولا بنوه ومن % % للفضل يسحب أذيالا على السحب % % PageV01P122 21(@)(@@) % من للفتوة والفتوى مجانسة % % في الصيغتين وفي الآداب والأدب % % 22(@)(@@) % من للتواضع حيث القدر في صعد % على النجوم وحيث العلم في صبب % % 23(@)(@@) % من للتصانيف فيها زينة وهدى % % و رجم باغ فيا لله من شهب % % 24(@)(@@) % أمضى 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms32# من النصل في نصر الهدى فإذا % % سلت نصال العدى أوقى من اليلب % % 25(@)(@@) % ذو همة في العلى والعلم قد بلغت % % فوق السماك وما تنفك في دأب % % 26(@)(@@) % حتى رأى العلم شفع الشافعي به % % و قال من ذا وذا أدركت مطلبى % % 27(@)(@@) % من للتهجد أو من للدعا بسطت % % به وبالجود فينا راحتا تعب % % 28(@)(@@) % من للمدائح فيه قد حلت وصفت % % كأنما افتر منها الطرس عن شنب % % 29(@)(@@) % لهفي لنظام مدح فكر أجمعهم % % بالهم لا بالذكا أمسى أبا لهب % % 30(@)(@@) % كأن أيديهمو تبت أسى فغدت % % من عي أقلامها حمالة الحطب % % PageV01P123 31(@)(@@) % لهفي على الطهر في عرض وفي سمة % % وفي لسان وفي حكم وفي غضب % % 32(@)(@@) % محجب غير ممنوع الندى بسنا % % عليائه ومهيب غير محتجب % % 33(@)(@@) % أضحى لسبك فخار من محاسنه % % على العراق فخار غير منتقب % % 34(@)(@@) % آها لمرتحل عنا وأنعمه % مثل الحقائب للمثنين والحقب % % 35(@)(@@) % إيمان حب إلى الاوطان حركه % % حتى قضى نحبه يا طول منتحب % % 36(@)(@@) % لهفي لكل وقور من بنيه بكى % % وهو الصواب بصوب الواكف السرب % % 37(@)(@@) % و كل بادية في الحجب قلن لها % % يا أخت خير أخ يا بنت خير أب % % 38(@)(@@) % إلى الحسين انتهى مسرى علي فلا % % هنئت يا خارجي الهم بالغلب % % 39(@)(@@) % بعد الإمام علي لا ولاء لنا % % من الزمان ولا قربى من النسب % % 40(@)(@@) % يا ثاويا والثنا والحمد ينشره % % بقيت أنت وأفنتنا يد الكرب % % PageV01P124 41(@)(@@) % نم في مقام نعيم غير منقطع % % و نحن في نار حزن غير متئب % % 42(@)(@@) % من لي بمصر التي ضمتك تجمعنا % % ولو بطون الثرى فيها فيا طربي % % 43(@)(@@) % ما أعجب الحال لي قلب بمصر وفي % % دمشق جسمي ودمع العين في حلب % % 44(@)(@@) % بالرغم منا مراث بعد مدحك لا % % تسلى ونحن مع الأيام في صخب % % 45(@)(@@) % ما بين أكبادنا والهم فاصلة % كلا ولا لصنيع الشعر من سبب % % 46(@)(@@) % أما القريض فلولا نسلكم كسدت % % أسواقه وغدت مقطوعة الجلب % % 47(@)(@@) % قاضي القضاة عزاء عن إمام تقى % % بالفضل أوصى وصايا المرء بالعقب % % 48(@)(@@) % فأنت في رتب العليا وما وسعت % % بحر تحدث عنه البحر بالعجب % % 49(@)(@@) % ما غاب عنا سرى شخص لوالده % % وعلمه والتقى والجود لم يغب % % 50(@)(@@) % جادت ثراك أبا الحكام سحب 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms33# حيا % تخطو بذيل على مثواك منسحب % % PageV01P125 51(@)(@@) % وسار نحوك منا كل شارقة % سلام كل شجي القلب مكتئب % % 52(@)(@@) % تحية الله نهديها وتتبعها % % فبعد بعدك ما في العيش من أرب % % 53(@)(@@) % وخفف الحزن إنا لاحقون بمن % % مضى فأمضى شباة الحادث الأشب % % 54(@)(@@) % إن لم يسر نحونا سرنا إليه على % % أيامنا والليالي الذهب والشهب % % 55(@)(@@) % إنا من الترب أشباح مخلقة % % فلا عجيب مآل الترب للترب % % PageV01P126 البحر : - 1(@)(@@) % نظير أب كنا فقدنا ومحبوب % % يمينا لقد جددت لي حزن يعقوب % % 2(@)(@@) % وهيجت أحزاني على خير صاحب % لقيت الذي لاقاه يا خير مصحوب % % 3(@)(@@) % لئن كنت خالا زان حجب أخوة % % لقد كنت وجها للتقى غير محجوب % % 4(@)(@@) % وإن كنت كم أقررت لي عين فارح % لقد سخنت من بعدها عين مكروب % % 5(@)(@@) % أقلب قلبا بالأسى أي واجب % % وأندب شخصا في الثرى أي مندوب % % 6(@)(@@) % بكيتك للحسنى وللبر والتقى % % وللبركات الموفيات بمطلوبي % % 7(@)(@@) % وللشمل مجموعا بيمنك وادعا % وللخير كم سببته خير تسبيب % % 8(@)(@@) % بكتك محاريب التهجد في الدجى % % بكاء شج حاني الجوانح محروب % % 9(@)(@@) % بكتك زوايا الزهد كانت خبيئة % لسكانها تدني لهم كل مرغوب % % 10(@)(@@) % بكتك ذوو الحاجات كنت اذا دعوا % % سفيرا لمضرور مجيرا لمنكوب % % PageV01P127 11(@)(@@) % بكتك ديار كنت أعطف والدا % لمن حل من شبانها ومن الشيب % % 12(@)(@@) % وطائر يمن قد أويت كوكرها % % إلى نسب القربى بها خير منسوب % % 13(@)(@@) % إذا ألسن الآثار عنك تذاكرت % % شممنا على تذكارها نفحة الطيب % % 14(@)(@@) % عليك سلام الله من مترحل % ترحل ذي جود من السحب مسحوب % % 15(@)(@@) % وهنئت بالجنات يا تاركي على % % سعير من الأحزان بعدك مشبوب % % 16(@)(@@) % نفارق محبوبا بدمع وحسرة % فمن بين تصعيد عليك وتصويب % % 17(@)(@@) % وخفف ما نلقى من الحزن أننا % % بمن غاب عنا لاحقون بترتيب % % 18(@)(@@) % وما هذه الأيام الا ركائب % % إلى الموت في نهج من العمر مركوب % % 19(@)(@@) % إذا ظن تبعيد الحمام وصلنه % % بشد على رغم النفوس وتقريب % % 20(@)(@@) % فكم هرم أو ناشيء عملت به % % عوامل من مجرور خطب ومنصوب % % PageV01P128 21(@)(@@) % وكم هين الأخلاق أو متغلب % % نفاه بحتم غالب غير مغلوب % % 22(@)(@@) % وكم ذي كتاب في الورى وكتيبة % غدا داخلا من موته تحت مكتوب % % 23(@)(@@) % وكم غافل يلهو بساق من المنى % % يدبر على أمثاله 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms34# وعد عرقوب % % 24(@)(@@) % وكم آمل في العمريحسب حاصلا % أتاه حمام عاجل غير محسوب % % 25(@)(@@) % ودم يا إمام الوقت عمن فقدته % وعش عيش مرجو مدى الدهر مرهوب % % 26(@)(@@) % مضى الخال حيث الوجه باق لمادح % فما الدهرفيما قد أتاه بمعتوب % % PageV01P129 البحر : - 1(@)(@@) % حجبت ولم أحسب سنا البدر يحجب % % ولا خلته في باطن الأرض يغرب % % 2(@)(@@) % وأورثت عيني جود كفك فانبرت % % تسح بأنواء الغمام وتسكب % % 3(@)(@@) % يذكرني بدر السماء سميه % % فها أنا أرعى كل بدر وأرقب % % 4(@)(@@) % ومذ آثرت فيك الكواكب حكمها % % صددت فما يرعى بجفني كوكب % % 5(@)(@@) % يقولون إن الشهب في كبد السما % % لها أسد يردي الأنام وعقرب % % 6(@)(@@) % دع الأسد الأفقي يفترس الورى % % ودع عقرب الأفلاك للخلق يسلب % % 7(@)(@@) % عليك خشيت الخطب قبل أوانه % وحاذرت صرف الدهر وهو مغيب % % 8(@)(@@) % وما حسبت كفي نوالك كثرة % % ولكن لمحذور الردى كنت أحسب % % 9(@)(@@) % لمن يستجد الفكر بعدك مدحة % يفضض في ألفاظها ويذهب % % 10(@)(@@) % لمن نترجى بعد بابك إنه % % لبذل الندى باب صحيح مجرب % % PageV01P130 11(@)(@@) % لمن تلتجي العافون بعد عوارف % عوارف ما تسعى اليه وتطلب % % 12(@)(@@) % على شرف الاخلاق بعدك والوفا % % سلام كوجه الروض والروض معجب % % 13(@)(@@) % مضت صدقات السر بعدك وانقضت % % فيا أسفا للسر بالصدر يذهب % % 14(@)(@@) % مضى رونق الآداب بعد وضوحه % % وغيب ذاك المنظر المتأدب % % 15(@)(@@) % ألا في سبيل الله ساكن ملحد % وأوصافه في الأرض تملى وتكتب % % 16(@)(@@) % فتى كرمت أنسابه وخلاله % فآلاؤه إرث لديه ومكسب % % 17(@)(@@) % سرى غير مسبوق ثناه وكيف لا % % وعنبره في نفحة الذكر أشهب % % 18(@)(@@) % فمن مبلغ شيبان يوم ترحلت % % علاه بأن الأفق بالشهب أشيب % % 19(@)(@@) % وأن بني الآمال أعوز رعيهم % % وضاعوا فلا أم هناك ولا أب % % 20(@)(@@) % فقدناه فقدان الربيع فدهرنا % % جمادى وزال المستماح المرجب % % PageV01P131 21(@)(@@) % أخا أدب بين المكارم والتقى % % على شرف الدارين يسعى ويدأب % % 22(@)(@@) % فلو لم تجدنا غر نعماه جادنا % % بفضل دعاه وابل الغيث يسكب % % 23(@)(@@) % مضى حيث تنأى عنه كل ذميمة % وأعماله بالصالحات تقرب % % 24(@)(@@) % وأيامه بدرية لا يضيرها % % بوادر ما تأتي وما تتجنب % % 25(@)(@@) % تجاهد فيها النفس والعيش ممكن % وزبرج هذا العيش شيء محبب % % 26(@)(@@) % لحى الله دنيا لا تكون مطية % إلى درك الأخرى تزم وتركب % % 27(@)(@@) % عجبت لمن يرجو الرضا وهو 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms35# مهمل % وتسويفنا مع ذلك العلم أعجب % % 28(@)(@@) % وماهذه الأيام إلا مراحل % وأجدر بها تقضي قريبا وتقضب % % 29(@)(@@) % إذا كانت الأنفاس للعمر كالخطا % % فإن المدى أدنى مغالا وأقرب % % 30(@)(@@) % أساكن جنات النعيم مهنأ % وتاركنا في حسرة نتلهب % % PageV01P132 31(@)(@@) % سقى عهدك الصوب الملث فطالما % % سقانا ملث من نوالك صيب % % 32(@)(@@) % ولا أغمدت أيدي النوائب غربها % % فما في حياة بعد موتك مرغب % % PageV01P133 البحر : - 1(@)(@@) % على اليمن كانت عزمة فاضلية % % حمدنا قريبا عزمها وإيابها % % 2(@)(@@) % اذا سام مولانا الممالك حافظا % أعز نواحيها وأعلا جنابها % % 3(@)(@@) % هداها حماها زانها جادها اعتلى % % فكان على الخمس الجهات شهابها % % 4(@)(@@) % ألا حبذا منه العبور لبدئه % % أطال على الشعرى العبور قبابها % % 5(@)(@@) % أخو اللفظ دري البدائع رائق % فصف خمرة محبوبة وحبابها % % 6(@)(@@) % وذو المأثرات الغر للفضل تنتمي % % اذا عددت أفعالها وانتسابها % % 7(@)(@@) % أرى آل فضل الله مورد أنعم % اذا مارأينا آل قوم سرابها % % 8(@)(@@) % وأحمدهم لا يقطع الله حمدهم % % فريد المعاني ينظمون سخابها % % 9(@)(@@) % تفرد عن أن يشبه البحر فضله % وقالت أعادي فضله بل تشابها % % PageV01P134 البحر : - 1(@)(@@) % إن هرب العبد ولا طالب % % فسيد العبد هو الهارب % % 2(@)(@@) % أحسن به من مثل سائر % % يرويه عن حالته السائب % % 3(@)(@@) % أقسم ما أهرب الا حيا % من سحب نعمى ذيلها ساحب % % 4(@)(@@) % خفيفة عن عبدكم خدمة % % وانما تثقيله راتب % % 5(@)(@@) % فحبكم فرض على قلبه % % وقلبه من خجل واجب % % 6(@)(@@) % قاضي قضاة الدين لم يبق لي % % من قربكم لي أمل خائب % % 7(@)(@@) % يعظم من كان لكم شاعرا % فكيف وهو الشاعر الكاتب % % PageV01P135 البحر : - 1(@)(@@) % إلى كم يخوض الدمع فيك ويلعب % % ويتعب فيه من يلوم ويعتب % % 2(@)(@@) % رشا ترفع الناس العيون لحسنه % % ولكن عيناه على الناس تنصب % % 3(@)(@@) % يلذ لسمعي ذكره لذة الثنا % % كسمع ابن موسى كلما مر يعذب % % 4(@)(@@) % وكم من يد بيضاء في كل سؤدد % بدت لابن موسى فهي إرث ومكسب % % 5(@)(@@) % لحمزة جماع المحامد أنعم % تشرق في طلابها وتغرب % % 6(@)(@@) % تمذهبت العشاق والعلم والندى % % لاخلاق عز الدين في الخلق مذهب % % 7(@)(@@) % وطابت لعمري كل أرض يحلها % % وكل مكان ينبت العز طيب % % PageV01P136 البحر : - 1(@)(@@) % سقى عهد ليلى مدمع وسحائب % % تجر صبا من خلفها وجنائب % % 2(@)(@@) % وحيي زمان الوصل اذا أوجه الدمى % % قناديل حسن والشعور 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms36# محارب % % 3(@)(@@) % ليالي وفا ليلى صديق ملازم % % كما للتقى والبر في الشام صاحب % % 4(@)(@@) % مرجية أقواله وفعاله % % ولا غرو أن ترجى لديه الرغائب % % 5(@)(@@) % تنبه في الأمر المهم يراعه % % فأغنى ونامت في الجفون القواضب % % 6(@)(@@) % وقال الورى من ذا الذي أنت مادح % % براعته حيث التقى والمواهب % % 7(@)(@@) % فقلت لهم موسى الزمان وهذه % % عصاه التي للملك فيها مآرب % % PageV01P137 البحر : - 1(@)(@@) % يوم الوفا ياسيد الأحباب % % فأدر كؤس الفضل والآداب % % 2(@)(@@) % واذا ذكرت الصاحب النائي فقل % % عقبى اللقا ياسيد الأصحاب % % 3(@)(@@) % يا سعد دين الله عش متمتعا % أما بكسب ثنا وكسب ثواب % % 4(@)(@@) % يا جابرا قلبي بنجح مقاصدي % % حتى اذا كاتبنه بجواب % % 5(@)(@@) % شعر بشعر فائق معه ندى % % واف فيا فوزي بكسب مرابي % % 6(@)(@@) % نعم على نعم تكاد يغيظني % % بالمطل فيها مازح الكتاب % % 7(@)(@@) % قالوا الحساب فقلت عادة قومه % % أعطى على يدهم بغير حساب % % PageV01P138 البحر : - 1(@)(@@) % تهن بما تكتسبي من سناك % % معالي الامور وما تكتسب % % 2(@)(@@) % ومرتبة رقيت قصدها % % إلى أن قضى الله ما ترتقب % % 3(@)(@@) % ومرتبة يا رفيع العماد % % يليق بمنصبها المنتصب % % 4(@)(@@) % وأنت المعان على أمرها % % لأنك من خير كفىء خطب % % 5(@)(@@) % وعالت بك الشهب حتى رأت % % تصرف ميزانها المنتصب % % 6(@)(@@) % وحب القلوب فكيف الحبوب % % بسعدك راج فلا تعتجب % % 7(@)(@@) % وسرت فان فرغت كيلها % % لبث الثناء فمن ينتخب % % 8(@)(@@) % ولا تحسبن رزقك المجتلي % % تزيد من أفقها المحتلب % % 9(@)(@@) % فانك من أسرة تصطفى % % وترزق من حيث لا تحتسب % % PageV01P139 البحر : - 1(@)(@@) % أحمر الخد زاد منه لهيبي % % ليت ورد الخدود كان نصيبي % % 2(@)(@@) % يا دم الوجنتين لا حالك ال % % له دم الخد من دماء القلوب % % 3(@)(@@) % أخصب الدمع كل حي كما أخ % % صب جود الوزير كل جديب % % 4(@)(@@) % الوزير الذي له الفخر حقا % في بعيد من الورى وقريب % % 5(@)(@@) % سابغ الجود والثنا قسمت نع % % مى يديه في كل عان غريب % % 6(@)(@@) % قيل ما بلدة لها في الثنا الشا % % ئع وصف محاسن الترتيب % % 7(@)(@@) % فمناها ذكر جميل وأجر % قلت هاتيك منية ابن خصيب % % PageV01P140 البحر : - 1(@)(@@) % تفدي كرام الحمى منكم كرائمه % % يا آل بيت العلا والفضل والحسب % % 2(@)(@@) % أما وقد بقيت عليا سمائكمو % % فما يضر زوال السبعة الشهب % % 3(@)(@@) % جادت ضريحك للرضوان غادية % % يا أخت خير أخ 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms37# يا بنت خير أب % % 4(@)(@@) % يا نبعة الفضل مذ فاز التراب بها % % لم تسر من حجب الا إلى حجب % % 5(@)(@@) % أجل ذكرك عن سعد وأعلم ما % % تلقى العلا بك من هم ومن حرب % % 6(@)(@@) % فإن عذلت أبا ذر الثناء فقد % % عذرت من خاطر العليا أبا لهب % % PageV01P141 البحر : - 1(@)(@@) % على اليمين والاقدام مقدم ما نأوا % % وآبوا وقد فازوا نوى وإيابا % % 2(@)(@@) % وطافوا على الأركان أركان سؤدد % % وعلم وفاضوا بالحجاز سحابا % % 3(@)(@@) % فإن ملأوا كم المقيم مكارما % % فقد ملأوا حجر المقام ثوابا % % 4(@)(@@) % ميامين حفوا الجانبين من العلا % % وتاجا علا فوق الرؤس جنابا % % 5(@)(@@) % فلا تركوا أعلام علم تراهمو % % بأفق علي للنجوم صحابا % % PageV01P142 البحر : - 1(@)(@@) % أهلا وسهلا بوافي الفضل كم شهدت % % آثاره بفخار غير محجوب % % 2(@)(@@) % واستأمنته على أسرارها دول % % قرت بها عينها في كل مطلوب % % 3(@)(@@) % لم لا يكون أمينا في ممالكها % % وهو العزيز عليها وابن يعقوب % % PageV01P143 البحر : - 1(@)(@@) % بروحي خطيبا جاور الترب فاغتدى % % عليه حدادا لبس كل خطيب % % 2(@)(@@) % وولى فأضحت للمنابر وحشة % % وللورق نوح فوق كل قضيب % % 3(@)(@@) % يذكرني مغنى حماه جماله % % فلله ذكرى منزل وحبيب % % PageV01P144 البحر : - 1(@)(@@) % سقى قبر إسماعيل منبجس الحيا % % وأرسى هضاب المزن حول هضابه % % 2(@)(@@) % وعاش لنا ملك نلوذ بظله % % ونغفر ذنب الدهر بعد احتقابه % % 3(@)(@@) % فما السعد إلا لمحة في جبينه % % وما العز الا وقفة عند بابه % % PageV01P145 البحر : - 1(@)(@@) % ما اسم شيء فرغت منه فلا % % أقول فيه ولا أقول به % % 2(@)(@@) % مشتبه لأمر كاد أكثره % % يخفى على الفكر في تقلبه % % 3(@)(@@) % لكن اذا ماجعلت دأبك في ال % % قلب فما أمره بمشتبه % % PageV01P146 البحر : - 1(@)(@@) % سلام على عهد الصبابة والصبا % % سلام بعيد الدار لا غرو ان صبا % % 2(@)(@@) % مفارق أوطان له وشبيبه % % اذا شرقت أهل التواصل غربا % % 3(@)(@@) % يعاود أحشاه من الشوق فاطر % ويتلو عليه آخر الآي من سبا % % 4(@)(@@) % وما زال صبا بالأحبة والها % إلى أن حكاه دمعه فتصببا % % PageV01P147 البحر : - 1(@)(@@) % أبواب سلطاننا خصت بأربعة % % تفردوا في صفات وفق مذهبه % % 2(@)(@@) % من مثل كاتبه أو مثل حاجبه % % أو مثل شاعره أو مثل مطربه % % PageV01P148 البحر : - 1(@)(@@) % رب مليح بأسه فاتك % % في الصحب حتى كلهم قد عجب % % 2(@)(@@) % يرهب قلب الليث يوم الوغى % % وهو غزال 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms38# قلبه ما رهب % % PageV01P149 البحر : - 1(@)(@@) % لفلان في الديوان صورة حاضر % % وكأنه من جملة الغياب % % 2(@)(@@) % لم يدر ما مخرومة وجريده % % سبحان رازقه بغير حساب % % PageV01P150 البحر : - 1(@)(@@) % وأدهم اللون حندسي % في جريه للورى عجائب % % 2(@)(@@) % يقصر جري الرياح عنه % % فكلها خلفه جنائب % % PageV01P151 البحر : - 1(@)(@@) % أرسلت نجلي واثقا بمكارم % % أورثتها عن سادة أنجاب % % 2(@)(@@) % لاغرو ان أعربت عن أحسابهم % % فأبو البقاء أحق بالإعراب % % PageV01P152 البحر : - 1(@)(@@) % أرى لصواب يا إبري صفات % % تحث على الخلاعة والتصابي % % 2(@)(@@) % فبادره فأنت به خبير % % فمثلك لا يدل على صواب % % PageV01P153 البحر : - 1(@)(@@) % سر بنا عن دمشق يا طالب العي % % ش فما للمقام للمرء رغبه % % 2(@)(@@) % رخصت أنفس الخلائق بالطا % % عون فيها فكل نفس بحبه % % PageV01P154 البحر : - 1(@)(@@) % يا مذكري بيت السعيد بأنعم % % أتت السيادة والعلى من بابها % % 2(@)(@@) % شكرتك نفس أنت أصل حياتها % % وبقائها وطعامها وشرابها % % PageV01P155 البحر : - 1(@)(@@) % أهلا وسهلا بك من قادم % % أطلع أنسي بعد طول المغيب % % 2(@)(@@) % و كنت مخذولا فقال الهنا % % نصر من الله وفتح قريب % % PageV01P156 البحر : - 1(@)(@@) % فلان الدين قد أعليت قدري % % وصح إلى مودتك انتسابي % % 2(@)(@@) % ألم ترني بلغت الأفق حتى % % بعثت لك الهلال مع الشهاب % % PageV01P157 البحر : - 1(@)(@@) % قالوا فلان قد جفت أفكاره % % نظم القريض فلا يكاد يجيبه % % 2(@)(@@) % هيهات نظم الشعر منه بعد ما % % سكن التراب وليده وحبيبه % % PageV01P158 البحر : - 1(@)(@@) % لي في ندى ومحاسن % % خبر يلذ ويستطاب % % 2(@)(@@) % فأنا وراحة مالكي % % كالبحر يمطره السحاب % % PageV01P159 البحر : - 1(@)(@@) % و قطايف رقت جسوما مثل ما % % غلظت قلوبا فهي لي أحساب % % 2(@)(@@) % تحلو فما تغلو ويشهد قطرها ال % % فياض أن ندى علي سحاب % % PageV01P160 البحر : - 1(@)(@@) % دعاه لذكر الحمى مذهب % % و شوق أقام فما يذهب % % 2(@)(@@) % أمصر سقتك غوادي السرور % % و جادك من أفقها صيب % % 3(@)(@@) % ذكرت زمانك حيث الوصال % % و حيث الصبا طيب طيب % % 4(@)(@@) % و بيض الوجوه بها نجتلى % % و سود الشعور بها تسحب % % 5(@)(@@) % و كم قمر فيك سافرت عنه % % و عقرب أصداغه غيهب % % 6(@)(@@) % فما كان بالسفر المستجاد % % و قد أطلع القمر العقرب % % 7(@)(@@) % و إن حف بي للنوى مهلك % فكم صح لي باللقا مطلب % % 8(@)(@@) % و إن طمعت في ليالي الحمى % % مناي فكم قد فشا أشعب % % 9(@)(@@) % وقد يحسب المرء ما فاته % % فيأتيه أضعاف 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms39# ما يحسب % % 10(@)(@@) % لعمرك ما الصبح بالمستنير % % و قد فاتني ذلك المغرب % % PageV01P161 11(@)(@@) % عسى خبر من كتاب الشهاب % % يخبر عنها بما أرقب % % PageV01P162 البحر : - 1(@)(@@) % عد مدنف القلب صبه % % يا محوج الدمع صبه % % 2(@)(@@) % أخذت جملة قلبي % % فلم تدع منه حبه % % 3(@)(@@) % أخذ الأمام مديحي % % في كل صاحب رتبه % % 4(@)(@@) % قاضي القضاة الملبي % % تاج السراة الألبه % % 5(@)(@@) % مولاي هنئت صوما % % جليل قرب وقربه % % 6(@)(@@) % يا نعمة للمرجى % % و للمعاند نشبه % % 7(@)(@@) % هذا يفطر فاه % % و ذا يفطر قلبه % % PageV01P163 البحر : - 1(@)(@@) % يا ساكني مصر تبت للفراق يد % قد صيرت بعدكم حزني أبا لهب % % 2(@)(@@) % و مهجتي في ضلوعي من جوى وضنا % % حمالة الهم أو حمالة الحطب % % 3(@)(@@) % عن مدمعي وندى كف الامير الا % % حدث عن البحر يا رائيه بالعجب % % 4(@)(@@) % أمير حاجب ملك غير أن له % % نور المهابة يغنيه عن الحجب % % 5(@)(@@) % يا منعشي حيث شخصي في دمشق وفي % % تفليس مالي ودمع العين في حلب % % 6(@)(@@) % كتب التواريح تملينا وتخبرنا % % عن سادة من ذوي العلياء والرتب % % 7(@)(@@) % و أنت بالفضل تملينا معاينة % % و السيف أصدق أنباء من الكتب % % PageV01P164 البحر : - 1(@)(@@) % حمائم وادي السفح إن بلابلا % تثير أسى المضى وإن قيل تطرب % % 2(@)(@@) % أحنذ إلى أهلي وأهوى لقاءهم % % و أين من المشتاق عنقاء مغرب % % 3(@)(@@) % و إني لطلاب الغنى غير باب من % % يقول الرجا هذا الصحيح المجرب % % 4(@)(@@) % فتى الفضل يحيى خالد بك ذكره % فيا حبذا من فضله الابن والأب % % 5(@)(@@) % لك النفح من مسك الثنا فابق لي رجا % وأهلي وأولادي الذين تغيبوا % % 6(@)(@@) % و إن لم يكن إلا أبو المسك أوهموا % % فانك أشهى في الفؤاد وأعذب % % 7(@)(@@) % خدمتك مداحا فلم لا أرى الغنى % % و برك موصول فلم لا أشبب % % PageV01P165 البحر : - 1(@)(@@) % صب بمصر حيث أولاده % % بالشام يذري الدمع مصبوبا % % 2(@)(@@) % ذو كبد حرى وهم بعضها % % فالكل يشكو الشوق ألهوبا % % 3(@)(@@) % لو شاء أن يجمع شملي بهم % % غوث الورى مابت مكروبا % % 4(@)(@@) % كافل دين الله سيف له % % لا زال للأمة محبوبا % % 5(@)(@@) % لو شق صدر الليث عن قلبه % % رأيت فيه اسمك مكتوبا % % 6(@)(@@) % بالقلم الرعبي من أجله % % فظل قلب الليث مرعوبا % % 7(@)(@@) % لازلت ذا عمر به لا ترى % % الاصنيع الخير محسوبا % % PageV01P166 البحر : - 1(@)(@@) % طربت 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms40# بعهد الصبا بعد ما % % سقيت بنار الاسى والحرب % % 2(@)(@@) % و حمر ذهني بياض المشيب % % فها أنا فيه الشفا والطرب % % 3(@)(@@) % و لولا الهنا بزمان الرئيس % % أمين العلا هد حالي العطب % % 4(@)(@@) % و مقدمه من حمى المرج قد % % شفاني من هرج مرج الكرب % % 5(@)(@@) % يوقرني وده لا جفا % % و يروي الصدى بره لا نضب % % 6(@)(@@) % دعاني شيخا رضا سيدي % % فهذبني غيظه المقتضب % % 7(@)(@@) % فأحسن لي في الوفا والجفا % % و شيخني في الرضا والغضب % % PageV01P167 البحر : - 1(@)(@@) % كم عاذل يغري وواش يتعب % % و مراقب بل خائف يترقب % % 2(@)(@@) % في كل معنى من صدودك مهلك % يحمي به من تبر خدك مطلب % % 3(@)(@@) % أهواك مثل هوى ابن يعقوب الثنا % % فكأن مرهب كل عدل مرغب % % 4(@)(@@) % يا قادما والجود تلو ركابه % % و العدل يعشب ما يشاء ويعجب % % 5(@)(@@) % يا من حمدت من الكتابة إنني % % تملى معاليها علي واكتب % % 6(@)(@@) % لا زلت ذا السرين في ألقابه % % هذا عطا يخفى وهذا منصب % % PageV01P168 البحر : - 1(@)(@@) % ياصاحب الحسن البديع تركتني % % يعقوب جانس ضره أيوبا % % 2(@)(@@) % شعري بحسنك لا يزال مشببا % يصف الأسى وبناره مشبوبا % % 3(@)(@@) % لولا امتداح محب دين الله ما % % فارقت أغزال المديح وثوبا % % 4(@)(@@) % يا من أحبته العلى وأحبتها % % أنت المحب أو المحب وجوبا % % 5(@)(@@) % لك راحة تعب الثراء بعتبها % % ما اكرم المتعوب والمعتوبا % % 6(@)(@@) % نصب خفضت العيش فيه فحبذا % % تصريفك المخفوض والمنصوبا % % 7(@)(@@) % عش للفضائل والهبات حيببها الط % % اءي أو طائيها المحبوبا % % PageV01P169 البحر : - 1(@)(@@) % تخيلت في انشاء لفظي نجعة % % فما نشأت لي لمعة بسحاب % % 2(@)(@@) % وكم خلت في فن الحساب إفادة % % فكان حساب الدهر غير حسابي % % 3(@)(@@) % إلى أن دعا باب التقى رائد الرجا % % فكان النوال الغمر رجع جوابي % % 4(@)(@@) % فيالوزير عن تقاه وبره % % رويت حديث المكرمات صحابي % % 5(@)(@@) % ويالكريم لست أحتاج عنده % إلى دفتر آتي به وكتاب % % 6(@)(@@) % فتحت به باب المدائح والرجا % % وأغلقت عن قصد المكارم بابي % % 7(@)(@@) % فإن قصرت منه صحيفة مدحتي % % فما قصرت والله صحف ثوابي % % PageV01P170 البحر : - 1(@)(@@) % يا سائلي عن أموري % % يكفيك حالي جوابا % 2(@)(@@) % شيبت موارد عيسى % % والشعر والشعر شابا % % 3(@)(@@) % لكن نداء علي % أنشا لشعري سحابا % % 4(@)(@@) % أعاده لي نعمى % % كادت تعيد الشبابا % % 5(@)(@@) % يا من أدار ثنائي % % على علاه شرابا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms41# % % 6(@)(@@) % يا أجلب الناس حمدا % لبابه وثوابا % % 7(@)(@@) % شراب دار مديحي % % وافاك يخدم بابا % % PageV01P171 البحر : - 1(@)(@@) % حمى ملة الاسلام خير سيوفها % % وزاد على فضل السيوف فأخصبا % % 2(@)(@@) % هو البحر من أي المعاني قصدته % % رأيت اتفاق الاسم والفعل معجبا % % 3(@)(@@) % يغيب فيا واها علينا وحسرة % ويأتي فيا أهلا وسهلا ومرحبا % % 4(@)(@@) % ويسفر وجه العيش عند قدومه % ويفتر حتى مبسم الزهر في الربا % % 5(@)(@@) % وماالشام الا شامة تحت ظله % فلله ما أشهى وأزهى وأطيبا % % 6(@)(@@) % بأبوابه عذ حيث حاذرت مهلكا % وبين يديه قف اذا رمت مطلبا % % 7(@)(@@) % فلا زال ذا باب إذا رامه الورى % % رأوا للهنا بابا صحيحا مجربا % % PageV01P172 البحر : - 1(@)(@@) % عجزت عن راتبي الادنى فواحربا % % واها لأشهر عام عجزت طلبا % % 2(@)(@@) % وان أتوني وقالوا إنها نصف % فإن أطيب نصفيها الذي ذهبا % % 3(@)(@@) % يا سادة حجبت عنا غمائمهم % % وليس غيثهم المعهود محتجبا % % 4(@)(@@) % يا خاتم الوزرا عدلا ومعرفة % يا مربع الغربا يا منجع الأدبا % % 5(@)(@@) % نعم الخواتيم أعمال تصاغ لكم % % حلي الجنان اذا صاغ الورى ذهبا % % 6(@)(@@) % حاشا النبات الذي أنشأته لكموا % % يذوي وقد أنشأت أيديكم سحبا % % 7(@)(@@) % كفوا ابن غنام أو كفوا أخا شجر % % من قبل أن تتلقوا نارهم حطبا % % PageV01P173 البحر : - 1(@)(@@) % أحبتي في دمشق ما ترك الن % % وى لقلبي من بعدكم حبه % % 2(@)(@@) % وكنت أرجو اللقا بمصر عسى % % تسركم من جوارنا طربه % % 3(@)(@@) % جوار قوم بنورهم فرجت % % عني وعن كل وافد كربه % % 4(@)(@@) % شهادة الناس فيهمو قبلت % % بالعدل حتى شهادة الحسبه % % 5(@)(@@) % يا سيدا ما وجدت غير قرى % % نعماه في محضر ولا غربه % % 6(@)(@@) % ليالي الصوم ماقطعت لها % % فطرا وأيام العام بالنسبه % % 7(@)(@@) % فليهنأ القرب من حماك به % % صوما وفطرا ولتهنك القربه % % PageV01P174 البحر : - 1(@)(@@) % أيها البحر الذي عن % % ه روى الناس العجائب % % 2(@)(@@) % من علوم طالعات % في سما الفضل كواكب % % 3(@)(@@) % وأياد ليس يخلو % % حاضر منها وغائب % % 4(@)(@@) % هي للداني بحار % وهي للنائي سحائب % % 5(@)(@@) % أنا مالي اليوم الا % بث حمدي لك راتب % % 6(@)(@@) % أنا للشكر المهنى % % وابن شكر للمواهب % % PageV01P175 البحر : - 1(@)(@@) % يا صاحبا لي ان يغب فعهوده % % لم تنس حيث تناست الغياب % % 2(@)(@@) % أرسلت تمرا بل نوى فقبلته % % بيد الوداد فما عليك عتاب % % 3(@)(@@) % واذا تباعدت الجسوم فودنا % % باق ونحن على 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms42# النوى أحباب % % PageV01P176 البحر : - 1(@)(@@) % بروحي هيفاء المعاطف حلوة % % تكاد بألحاظ المحبين تشرب % % 2(@)(@@) % لقد عذبت ألفاظها وصفاتها % % على أن قلبي في هواها معذب % % 3(@)(@@) % تجاسر عود اللهو يشبه صوتها % % فمن أجل هذا أصبح العود يضرب % % 4(@)(@@) % وأجرت دموع العاشقين بلعبها % % فقال الاسى دعها تخوض وتلعب % % PageV01P177 البحر : - 1(@)(@@) % قدمت كما ترضى السيادة والعلى % % على الشام من نعمى يديك سحاب % % 2(@)(@@) % ولا برحت خدام وصفك ما على % % محاسنها للواصفين حجاب % % 3(@)(@@) % لعزمك يمن والمقاصد مرشد % ورأيك نجح والمقال صواب % % PageV01P178 البحر : - 1(@)(@@) % أبا الحسن الإمام عليك منا % % سلام الله نفاح العياب % % 2(@)(@@) % روينا من نداك الغمر لما % % علوت إلى السحاب بلا ارتياب % % 3(@)(@@) % فكل بني الولا إن غبت يوما % تقول لنا علي في السحاب % % PageV01P179 البحر : - 1(@)(@@) % يا كاتب الملك تهنأ به % % هلال عيد سعده واجب % % 2(@)(@@) % كحاجب مقترن بالبها % % فحبذا الكاتب والحاجب % % 3(@)(@@) % نحن رعاياك فلا مغضب % % منا على الدهر ولا عاتب % % 4(@)(@@) % تجمعت فيه مزايا الهنا % % فكلنا في دهره راغب % % PageV01P180 البحر : - 1(@)(@@) % يا من أرى نسبي بيت المديح له % لو لم يكن لي لا بيت ولا نسب % % 2(@)(@@) % لا تأمرني بمدح الحاضرين فما % % أراه بل لا أرى قلبي له يجب % % 3(@)(@@) % بيني وبين مديح القوم فاصلة % ما دام لي في معاني مدحكم سبب % % PageV01P181 البحر : - 1(@)(@@) % بالله عج الحمى البدري مدكرا % % بيتا نظيما وقل يا بيت مطلوبي % % 2(@)(@@) % أنت الحبيب ولكني أعوذ به % % من أن أكون محبا غير محبوب % % 3(@)(@@) % وحق تربة يحيى يا محمده % لا غير الصدق مني صبر أيوب % % PageV01P182 البحر : - 1(@)(@@) % غدا فيك قلبي أحمدي صبابة % % فاحراقه بالنار منك عجيب % % 2(@)(@@) % ولحظك سهم لا يرد فحبذا % % للحظك سهم في الحشا ونصيب % % 3(@)(@@) % ويا عاذلي اني لنقلك صابر % % وإني مقيم ما أقام عسيب % % 4(@)(@@) % غريب غرام في غريب محاسن % % وكل غريب للغريب نسيب % % PageV01P183 البحر : - 1(@)(@@) % جاء هلال العام عام الهنا % % مبشرا اذ قدم الصاحب % % 2(@)(@@) % فقلت إذ شبهته حاجبا % في حالتيه هكذا الواجب % % 3(@)(@@) % وزيرنا الأول لكنه % % جاء وفي خدمته حاجب % % PageV01P184 البحر : - 1(@)(@@) % في أمان الله أني سرت يا % % أجزل الناس ثناء وثوابا % % 2(@)(@@) % ورعاك الله فينا ملكا % ملك الأنفس ملكا لا يخابا % % 3(@)(@@) % لمواطي طرقه كم مؤمن % % قائل يا ليتني كنت 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms43# ترابا % % PageV01P185 البحر : - 1(@)(@@) % مضى بالصبا إيرى الذي كنت داعيا % وكان لما تهواه أي مجيب % % 2(@)(@@) % وكنت اذا أبصرته لك قائما % نظرت إلى ذي لبدتين أريب % % 3(@)(@@) % وأفلست مع هذا المصاب فيا لها % % رزية مال أو فراق حبيب % % PageV01P186 البحر : - 1(@)(@@) % يا خيل كتاب مضوا لبيوتهم % % بأبي الشموس الجانحات غواربا % % 2(@)(@@) % كم من حمارقد تعبت بسوقه % % من خلفهم فغدوت أمشي راكبا % % 3(@)(@@) % حال متى علم ابن يحيى شرحها % % جاء الزمان إلي منها تائبا % % PageV01P187 البحر : - 1(@)(@@) % حمى الله شمس المكرمات من الأذى % % ولا نظرت عيناي يوم مغيبه % % 2(@)(@@) % لقد أبقت الأيام منه لأهلها % % بقية صافي المزن غير مشوبه % % 3(@)(@@) % كأن سجاياه اللطيفة قهوة % حباب حمياها بياض مشيبه % % PageV01P188 البحر : - 1(@)(@@) % يا سيدي يا ملاذ الطالبين ومن % % بعلمه ونداه أنجح الطلبا % % 2(@)(@@) % مباشر والجامع المعمور قد منعوا % % وافى الحوالة عن قصدي فوا حربا % % 3(@)(@@) % فإن أتوك وقالوا إنها نصف % فإن أطيب نصفيه الذي ذهبا % % 4(@)(@@) % خمسون قالت لفكر كان ذا أدب % أبعد خمسين مني تبتغي الأدبا % % PageV01P189 البحر : - 1(@)(@@) % أهلا بمقدمك السعيد فإنه % % يا بحر أهدى للشآم عجابا % % 2(@)(@@) % فاذا أرادوا الجو كنت غمامة % واذا أرادوا الرأي كنت شهابا % % 3(@)(@@) % واذا دنا من لثم نعلك تربة % ود الموحد لو يكون ترابا % % PageV01P190 البحر : - 1(@)(@@) % صرفت إلى الباب الشهابي مقصدي % % وحمدي حتى ليس في الناس مذهب % % 2(@)(@@) % فلا منزل للقوم يرصد أفقه % % بفكري ولا والله باب مجرب % % 3(@)(@@) % وحسبي أن أدعى نباتي غرسه % فلا طرس إلا وهو بالحمد معشب % % PageV01P191 البحر : - 1(@)(@@) % أرجو اللقاء الصاحبي كما % % أفلت في دمشق وهو غائب % % 2(@)(@@) % حتى لقد صح مقال قائل % % دمشق لا يوجد فيها صاحب % % PageV01P192 البحر : - 1(@)(@@) % قالوا أمن عرض بجسمك مؤلم % أمسيت في صعد تئن وفي صبب % % 2(@)(@@) % فأجبتهم روحي الفداء لمالك % قد كان في هذا العروض هو السبب % % PageV01P193 البحر : - 1(@)(@@) % عين البرايا جملت مملكة % قامت فروض الهنا بواجبها % % 2(@)(@@) % فحبذا في البلاد ما جمعت % % في الحسن من عينها وحاجبها % % PageV01P194 البحر : - 1(@)(@@) % صناعة النظم تجنبتها % % وذاك يا منيتي الواجب % 2(@)(@@) % بحر العطايا قد نحا غيرنا % % فأنت بورى وأنا هارب % % PageV01P195 البحر : - 1(@)(@@) % أيها العاذل الغبي تأمل % % من غدا في صفاته القلب ذائب % % 2(@)(@@) % وتعجب لطرة وجبين % إن في الليل والنهار عجائب 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms44# % % PageV01P196 البحر : - 1(@)(@@) % لأيام مولانا العزيز عواطف % على قاصديه من ندى وثواب % % 2(@)(@@) % فما مصر إلا جنة ساكن % ندى رزقه يأتي بغير حساب % % PageV01P197 البحر : - 1(@)(@@) % صب إلى أحبابه ما سلا % % بالله في بعد ولا قرب % % 2(@)(@@) % صب عليه الدمع هتانه % فياله صب على صب % PageV01P198 البحر : - 1(@)(@@) % أحسن بها ياسيدي أنعما % لم أرها إلا لكم تنسب % 2(@)(@@) % فلم أقل حين فشا عرفها % % من أين هذا النفس الطيب % % PageV01P199 البحر : - 1(@)(@@) % قالوا عن الفتح قد بعدت فهل % % ذكرك عند الصحاب بالنسب % % 2(@)(@@) % أفي حواشي الغلمان قلت ألا % % ياليتني كنت في حواشي الكتب % % PageV01P200 البحر : - 1(@)(@@) % بعث الرئيس لرزقه البابا % % خابت ورمت الرازق الوهابا % % 2(@)(@@) % فأتى الي الرزق يسعى منشدا % كس أخت رزق لا يدق البابا % % PageV01P201 البحر : - 1(@)(@@) % دم يا أخي الدين والدنيا معا % تملى بيوت الفضل منك وتكتب % % 2(@)(@@) % مدح ومنتسب ومسكن نزهة % كل الثلاثة عنك باب طيب % % PageV01P202 البحر : - 1(@)(@@) % لك الله ما أزكى وأشرف همة % وأكرم نفسا في المكارم راغبه % % 2(@)(@@) % تسمى عطايا الشعر جائزة له % % وأنت تسميها بفضلك واجبه % % PageV01P203 البحر : - 1(@)(@@) % بهاء دين الله حكمت في % % ولاء قلبي والثنا الواجب % % 2(@)(@@) % أعتقني الهم فكان الولا % % لابن عقيل بن أبي طالب % % PageV01P204 البحر : - 1(@)(@@) % بدا كرم الوجه الخصيبي بعد ما % % تقضى كريم الدين وهو منيب % % 2(@)(@@) % وما كان ذا خصب لعبسة وجهه % % ولكنما وجه الكريم خصيب % % PageV01P205 البحر : - 1(@)(@@) % هلال عين العبد يا سيدي % % كحاجب وصفي له واجب % % 2(@)(@@) % لا عجب قاضي قضاة الورى % % وافى وفي خدمته حاجب % % PageV01P206 البحر : - 1(@)(@@) % بخديك ذا اسم وفعل مصاب % % وخادم حسن لست فيه أعاب % % 2(@)(@@) % وما شئت الا أن أذل عواذلي % % على أن رأيي في هواك صواب % % PageV01P207 البحر : - 1(@)(@@) % شكرا لأقلامك اللاتي جرت لمدى % % في الفضل أضحى لباغي شأوه التعبا % % 2(@)(@@) % حلت واطربت المصغي وحزت بها % % فضل السباق فسماها الورى قصبا % % PageV01P208 البحر : - 1(@)(@@) % يا عجبا من طوق طاقيتي % % عن لبس يوم واجد قد غلب % % 2(@)(@@) % وشاش رأسي انقلبت حاله % عندي وقالوا الشاش لا ينقلب % % PageV01P209 البحر : - 1(@)(@@) % شيخ إسلام الورى دم للورى % % وابنك المحبوب في الوصف نبي % % 2(@)(@@) % شيخ اقرآء حديث السن يا % % حبذا الآن بني وأبي % % PageV01P210 البحر : - 1(@)(@@) % لقد قر طرف مصل بمصر % % بمسجد هذا الكريم انجذب % % 2(@)(@@) % ودار النحاس 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms45# به غيرت % % فصارت لعمري دار الذهب % % PageV01P211 البحر : - 1(@)(@@) % لقد أسعد الله رأي الذي % % بنى مسجدا وصفه قد وجب % % 2(@)(@@) % لدار النحاس به حلية % % فدار النحاس كدار الذهب % % PageV01P212 البحر : - 1(@)(@@) % لا أظلم الشيب فمن قبله % % ما كان لي في عيش نصيب % % 2(@)(@@) % كلا ولا قبل سواد الصبا % % كأنما أبيض خدي مشيب % % PageV01P213 البحر : - 1(@)(@@) % عافية بشرت بعافية السل % % طان اكرم بيمنها الصاحب % % 2(@)(@@) % حجبه هذي لهذه خدمت % % يا حسن هذا الوزير والحاجب % % PageV01P214 البحر : - 1(@)(@@) % خليلي لا نوم لنا عند من له % % فسا زاد حتى شاع خطب مهبه % % 2(@)(@@) % فلا تقربا هذا النسيم فإنه % % إذا هب كان الموت أيسر خطبه % % PageV01P215 البحر : - 1(@)(@@) % إذا سألوني عن هوى قد كتمته % % سكت أراعي واشيا ورقيبا % % 2(@)(@@) % وجاوب عني سائل من مدامعي % % فلله دمعا سائلا ومجيبا % % PageV01P216 البحر : - 1(@)(@@) % فديتك من ملك يكاتب عبده % بأحرفه اللاتي حكتها الكواكب % % 2(@)(@@) % ملكت بها رقي وأنحلني الأسى % % فها أنا ذا عبد رقيق مكاتب % % PageV01P217 البحر : - 1(@)(@@) % لحاك الله يا مولاي كم ذا % % تصب من الأذى قبلي وصوبي % % 2(@)(@@) % خطفت عمامتي فسكت عنها % % وزدت لجاجة فخطفت ثوبي % % PageV01P218 البحر : - 1(@)(@@) % وذي عذل لما رآني عاشقا % كواعب غزلان تدل وتطرب % % 2(@)(@@) % لحاني فأجريت المدامع أنهرا % فقلت له دعهم يخوضوا ويلعبوا % % PageV01P219 البحر : - 1(@)(@@) % شكرا لنعماك يا غوث العفاة ولا % % زالت مدائحك العليآء تنتحب % % 2(@)(@@) % قد جدت بالقطر حتى زدت في طمع % % وأول الغيث قطر ثم ينسكب % % PageV01P220 البحر : - 1(@)(@@) % فتحت للناس أبواب المقاصد لا % % تعطلت من حماك الرحب أبواب % % 2(@)(@@) % هذا له سبب فيما يحاوله % % وذا له من مقال الشعر أسباب % % PageV01P221 البحر : - 1(@)(@@) % مبقل الوجه أدار الطلا % فقال لي في حبها عاتبي % % 2(@)(@@) % عن أحمر المشروب ما تلتهي % % قلت ولا عن أخضر الشارب % % PageV01P222 البحر : - 1(@)(@@) % وأغيد يشكو خصره جور ردفه % % ويمسي بليل الشعر وهو يعاتبه % % 2(@)(@@) % يشبع ذا لحما وذا بات جائعا % وشبع الفتى لؤم اذا جاع صاحبه % % PageV01P223 البحر : - 1(@)(@@) % يا حبذا بدل أتى عمن مضى % % من قومه في الفضل والاحساب % % 2(@)(@@) % بدل من الابدال في أوصافه % % يعزى إلى قطب من الأقطاب % % PageV01P224 البحر : - 1(@)(@@) % أمولاي صبرا على مبرم % له كل يوم لديك اكتساب % % 2(@)(@@) % تقول لجودك حاجاته % % سيفتح باب اذا سد باب % % PageV01P225 البحر : - 1(@)(@@) % يا سيد 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms46# الوزرا إهنأ بها خلعا % يقوم من قالها الأوفى بما يجب % % 2(@)(@@) % سحابة الطرحة العلياء طالعة % % وأول الغيث قطر ثم ينسكب % % PageV01P226 البحر : - 1(@)(@@) % يا مالكا تقصر عن وصفه % % بدائع الشاعر والكاتب % % 2(@)(@@) % في بابك العلم وفيض الندى % % فلا خلا بابك من طالب % % PageV01P227 البحر : - 1(@)(@@) % أيا دار اليمن من كل وجهة % عليك ولا زال الهنا لك يجلب % % 2(@)(@@) % ولا عدم القصاد بابك إنه % % لنجح الرجا باب صحيح مجرب % % PageV01P228 البحر : - 1(@)(@@) % هنئتها خلعة مجددة % % بكل سعد وكل مرغوب % % 2(@)(@@) % بهرت حسنا بها فحيث ترى % % يقال ذا يوسف بن يعقوب % % PageV01P229 البحر : - 1(@)(@@) % وراهن قلبي خفوق البروق % % وكان لدمعي عليه الغلب % % 2(@)(@@) % جرت مع دمعي غوادي الحيا % % فقال الغرام لقلبي وجب % % PageV01P230 البحر : - 1(@)(@@) % أقول لقلبي العاني تصبر % % وإن بعد المساعد والحبيب % % 2(@)(@@) % عسى الهم الذي أمسيت فيه % % يكون وراءه فرج قريب % % PageV01P231 البحر : - 1(@)(@@) % ناعورة بمنازل البحر اقتضت % % في حالة التشبيه بث عجائب % % 2(@)(@@) % فلك يدور على المجرة مطلقا % أسى الكواكب وهي ذات ذوائب % % PageV01P232 البحر : - 1(@)(@@) % اعجب لها ناعورة قلبها % % للماء منشى العيش والعشب % % 2(@)(@@) % تعبانة الجسم ولكنها % % كما ترى طيبة القلب % % PageV01P233 البحر : - 1(@)(@@) % حجبتني فازددت عندي علا % برغم من أقبل كالعاتب % % 2(@)(@@) % وقلت لا أعدم من سيدي % % من كان عيني فغدى حاجبي % % PageV01P234 البحر : - 1(@)(@@) % أمولاي ان عدوي الزمان % % يعوق عن قصدك الواجب % % 2(@)(@@) % مخافة أشكو اليك أذاه % % فأشكو العدو إلى الصاحب % % PageV01P235 البحر : - 1(@)(@@) % أنكروا حالي التي قد صلحت % % بعد دهر صم عن عاتبه % % 2(@)(@@) % ثم قالوا لم هذا قلت ذي % % صدقات السر من كاتبه % % PageV01P236 البحر : - 1(@)(@@) % تزوج سيف الدين حسناء ناسبت % % اليه وأقصت معشرا وأقاربا % % 2(@)(@@) % ولم تستشر في أمرها غير نفسها % % ولم ترض الا قائم السيف صاحبا % % PageV01P237 البحر : - 1(@)(@@) % وافى لي البابا بمشط لم أجد % % الا الذي قدمت عليه ثوابا % % 2(@)(@@) % وأني الي اليوم بفتح حلقه % % فامنن علي وسد هذا البابا % % PageV01P238 البحر : - 1(@)(@@) % أقول لدباب على المردفي الدجى % % تأخر عن الظبي الذي عز جانبه % % 2(@)(@@) % فقد بث عبد الله جند انتقامه % % على الليل حتى ما تدب عقاربه % % PageV01P239 البحر : - 1(@)(@@) % مسئلة الدار غدت % % بيني وبين من أحب % % 2(@)(@@) % لولا مشيبي ما جفت % % لولا جفاها لم أشب % % PageV01P240 البحر : - 1(@)(@@) % حلا دمعي لخدي في هواكم % % فما أحلى 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms47# بصحن الخد سكبا % % 2(@)(@@) % وناسب حالتي لما دعوتم % % كلانا قد جرى للحب صبا % % PageV01P241 البحر : - 1(@)(@@) % ولاعب يعرب شطرنجه % عن فهمه المتقد الصائب % % 2(@)(@@) % يغيب لكن ذهنه حاضر % يا حبذا من حاضر غائب % % PageV01P242 البحر : - 1(@)(@@) % يا خليلا جعلته العين والقل % % ب وأصفيته سرائر حبي % % 2(@)(@@) % لا عجيب اذا جلبت لي الض % % ر فهذي عادات عيني وقلبي % % PageV01P243 البحر : - 1(@)(@@) % تأملت في الحمام تحت مآزر % % روادف غيد ما سناها بغائب % % 2(@)(@@) % كأني من هذي وهاتيك ناظر % بياض العطايا في سواد المطالب % % PageV01P244 البحر : - 1(@)(@@) % أحاول صبرا عن هوى قد ألفته % % ولا أجد الصبر المحاول يعذب % 2(@)(@@) % والقى به ثوب المشيب مطبقا % فأغسله بالدمع والطبع أغلب % % PageV01P245 البحر : - 1(@)(@@) % أسعد بها ياقمري برزة % % سعيدة الطالع والغارب % % 2(@)(@@) % صرعت طيرا وسكنت الحشى % % فما تعديت عن الواجب % % 3(@)(@@) % يا ناصر الدين والدنيا بقيت لنا % % وللسطا والعطا والحلم والأدب % % 4(@)(@@) % تخط أحسن خط أنت واضعه % % في الحرب والسلم بالهندي والعرب % % 5(@)(@@) % فديتك غصنا ليس يبرح مثمرا % % من الحسن في الدنيا بكل غريب % % 6(@)(@@) % تفتح في وجناته الورد أحمرا % % فيا ليت ذاك الورد كان نصيبي % % 7(@)(@@) % وخاطر عنت الأشواق تعجبه % % جآذر الترك لازي الأعاريب % % 8(@)(@@) % من كل أهيف ضاقت عينه فمتى % % يجود لي من تلاقيه بمطلوبي % % 9(@)(@@) % يا زائري قاضي القضاة ليهنكم % % ما حقق التجريب من أبوابه % % 10(@)(@@) % أقسمت ما الحجر المكرم للغنى % % الا الذين تغشون من أعتابه % % PageV01P246 11(@)(@@) % لئن عذر الصاحب المرتجى % % لتأخير معلومي الواجب % % 12(@)(@@) % فقد رم حالي تاج العلى % % وناب الصديق عن الصاحب % % 13(@)(@@) % شكرا لها من أنعم قد شادها % % نعم العماد فمكنت أسبابي % % 14(@)(@@) % قالوا الحساب فقلت ان عوائدي % % أعطى على يده بغير حساب % % 15(@)(@@) % بشر أمير المعالي باتصال هنا % يحفه السعد من أقصى جوانبه % % 16(@)(@@) % واكتب على بيت سكناه العزيز به % % عزا يدوم وإقبالا لصاحبه % % 17(@)(@@) % يا سادة قد ظفرت عندهمو % % بيمن قصد ونجح مطلوب % % 18(@)(@@) % حاشاكمو أن يبيت جاركمو % % يشكو إلى الناس ضر أيوب % % 19(@)(@@) % جاءت الي الشوربا فحبذا % % يا سيدي منك طعام معجب % % 20(@)(@@) % أفاد جسمي قوة فها أنا % % كما يقال الأسد المشورب % % PageV01P247 21(@)(@@) % وغائب تذكرني كتبه % % لياليا دمعي لها في انسكاب % % 22(@)(@@) % فهاك بالمرسل من أدمعي % % حديث شجوي من كتاب الشهاب % % 23(@)(@@) % عذيري منه 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms48# معرضا متجنيا % كأني له نحو الوداد أجاذب % % 24(@)(@@) % قسا فوق ما تقسو الجبال فلم يجب % % ندائي وأصداء الجبال تجاوب % % 25(@)(@@) % مولاي قد جئنا لنحمل قصة % % نحو الوزير فقم مع الأصحاب % % 26(@)(@@) % فاليوم حاجتنا اليك وانما % % يدعى الطبيب لشدة الأوصاب % % 27(@)(@@) % يغيب الذي أهواه عني ساعة % % فأسأم من ليل طويل أراقبه % % 28(@)(@@) % وكيف يطيب الليل عندي والكرى % % وليس إلى جنبي خليل ألاعبه % % 29(@)(@@) % علقتها غيداء حالية الطلا % % تجني على عقل المحب ولبه % % 30(@)(@@) % بخلت بلؤلؤ ثغرها عن لاثم % فتطوقت بمثال ما بخلت به % % PageV01P248 31(@)(@@) % يا حسن كتاب الحساب وخلفهم % % غلمانهم بدفاتر وتعابي % % 32(@)(@@) % كم قد رجوت وفي حساب مثلهم % % فلقيته لكن بغير حساب % 33(@)(@@) % يا غائبين تعللنا لغيبتهم % % بطيب لهو ولا والله لم يطب % % 34(@)(@@) % ذكرت والكاس في كفي لياليكم % % فالكاس في راحة والقلب في تعب % % 35(@)(@@) % أمولاي شكرا لليراع الذي أرى % % بياض العطايا في سواد المطالب % % 36(@)(@@) % لقد قمت بالمسنون والفرض في الندى % % تضيع هذا المال في غير واجب % % 37(@)(@@) % دامت بسعدك للعداة مهالك % يا مطلب الجود الذي لا يحجب % % 38(@)(@@) % والله ما ندري إذا ما فاتنا % % طلب اليك من الذي نتطلب % % 39(@)(@@) % يا حبذا ملك حثششششش الجيوش إلى % % خوض الوغى بشريق اللون محبوب % % 40(@)(@@) % تعجلوا الفال في نحر العدى فغدوا % % حمر الحلى والمطايا والجلابيب % % PageV01P249 41(@)(@@) % أهنيك بالعيد السعيد قدومه % % واشكر برا أنت من قبل واهبه % % 42(@)(@@) % لعمري لقد أصبحت عين زماننا % % فيا حبذا عين الزمان وحاجبه % % 43(@)(@@) % ليهنك يا عين الزمان وأهله % % ويهني الورى عام بسعدك آيب % % 44(@)(@@) % به للبرايا حاجب من هلاله % % ولحت فيا لله عين وحاجب % % 45(@)(@@) % للصاحب بن الصاحب الناصر من % % دعاه رأي في الصلاة الراتبة % % 46(@)(@@) % يمنح من قبل امتداح مجده % % جائزة ثم يراها واجبه % % 47(@)(@@) % لا غرو إن جئت النسيب بمدحة % من غير ما غزل وغير نسيب % % 48(@)(@@) % هزت رؤس السامعين بوصفه % % طربا فلم تحتج إلى تشبيب % % 49(@)(@@) % يا سيدي شكرا لها من أنعم % وقتي بها من بعد مصر خصيب % % 50(@)(@@) % قسما لقد أفردت في نظم وفي % % ود ففي الحالين أنت حبيب % % PageV01P250 51(@)(@@) % لا تنكروا حمرة الأظافر من % % فلان والقمل منه منسرب % % 52(@)(@@) % حمرتها من دماء ما قتلت % % والدم في النصل شاهد عجب 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms49# % % 53(@)(@@) % إن الأمير سليمان اعتلى رتبا % في الخبر والخبر استعلت على الرتب % % 54(@)(@@) % مجانس الحسن بالحسان في صفة % وفارس الخيل وجه الترك والعرب % % 55(@)(@@) % يا ملاذي الغوث من عائلة % % ليس من تكليفهم لي مهرب % % 56(@)(@@) % طلبوا في أرجلي شيئا وقد % % نقبوا رأسا بما قد طلبوا % % 57(@)(@@) % أشكو لأنعمك التي % % هي للعفاة سحائب % % 58(@)(@@) % حالي التي يرثي العدو % لها فكيف الصاحب % % PageV01P251 البحر : - 1(@)(@@) % يا ناصر الدين والدنيا بقيت لنا % % وللسطا والعطا والحلم والأدب % % 2(@)(@@) % تخط أحسن خط أنت واضعه % % في الحرب والسلم بالهندي والعرب % % 3(@)(@@) % فديتك غصنا ليس يبرح مثمرا % % من الحسن في الدنيا بكل غريب % % 4(@)(@@) % تفتح في وجناته الورد أحمرا % % فيا ليت ذاك الورد كان نصيبي % % 5(@)(@@) % وخاطر عنت الأشواق تعجبه % % جآذر الترك لازي الأعاريب % % 6(@)(@@) % من كل أهيف ضاقت عينه فمتى % % يجود لي من تلاقيه بمطلوبي % % 7(@)(@@) % يا زائري قاضي القضاة ليهنكم % % ما حقق التجريب من أبوابه % % 8(@)(@@) % أقسمت ما الحجر المكرم للغنى % % الا الذين تغشون من أعتابه % % 9(@)(@@) % لئن عذر الصاحب المرتجى % % لتأخير معلومي الواجب % % 10(@)(@@) % فقد رم حالي تاج العلى % % وناب الصديق عن الصاحب % % PageV01P252 11(@)(@@) % شكرا لها من أنعم قد شادها % % نعم العماد فمكنت أسبابي % % 12(@)(@@) % قالوا الحساب فقلت ان عوائدي % % أعطى على يده بغير حساب % % 13(@)(@@) % بشر أمير المعالي باتصال هنا % يحفه السعد من أقصى جوانبه % % 14(@)(@@) % واكتب على بيت سكناه العزيز به % % عزا يدوم وإقبالا لصاحبه % % 15(@)(@@) % يا سادة قد ظفرت عندهمو % % بيمن قصد ونجح مطلوب % % 16(@)(@@) % حاشاكمو أن يبيت جاركمو % % يشكو إلى الناس ضر أيوب % % 17(@)(@@) % جاءت الي الشوربا فحبذا % % يا سيدي منك طعام معجب % % 18(@)(@@) % أفاد جسمي قوة فها أنا % % كما يقال الأسد المشورب % % 19(@)(@@) % وغائب تذكرني كتبه % % لياليا دمعي لها في انسكاب % % 20(@)(@@) % فهاك بالمرسل من أدمعي % % حديث شجوي من كتاب الشهاب % % PageV01P253 21(@)(@@) % عذيري منه معرضا متجنيا % كأني له نحو الوداد أجاذب % % 22(@)(@@) % قسا فوق ما تقسو الجبال فلم يجب % % ندائي وأصداء الجبال تجاوب % % 23(@)(@@) % مولاي قد جئنا لنحمل قصة % % نحو الوزير فقم مع الأصحاب % % 24(@)(@@) % فاليوم حاجتنا اليك وانما % % يدعى الطبيب لشدة الأوصاب % % 25(@)(@@) % يغيب الذي أهواه عني ساعة % % فأسأم من ليل طويل أراقبه % % 26(@)(@@) % وكيف يطيب الليل عندي والكرى % % وليس إلى 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms50# جنبي خليل ألاعبه % % 27(@)(@@) % علقتها غيداء حالية الطلا % % تجني على عقل المحب ولبه % % 28(@)(@@) % بخلت بلؤلؤ ثغرها عن لاثم % فتطوقت بمثال ما بخلت به % % 29(@)(@@) % يا حسن كتاب الحساب وخلفهم % % غلمانهم بدفاتر وتعابي % % 30(@)(@@) % كم قد رجوت وفي حساب مثلهم % % فلقيته لكن بغير حساب % PageV01P254 31(@)(@@) % يا غائبين تعللنا لغيبتهم % % بطيب لهو ولا والله لم يطب % % 32(@)(@@) % ذكرت والكاس في كفي لياليكم % % فالكاس في راحة والقلب في تعب % % 33(@)(@@) % أمولاي شكرا لليراع الذي أرى % % بياض العطايا في سواد المطالب % % 34(@)(@@) % لقد قمت بالمسنون والفرض في الندى % % تضيع هذا المال في غير واجب % % 35(@)(@@) % دامت بسعدك للعداة مهالك % يا مطلب الجود الذي لا يحجب % % 36(@)(@@) % والله ما تدري إذا ما فاتنا % % طلب اليك من الذي نتطلب % % 37(@)(@@) % يا حبذا ملك حي الجيوش إلى % % خوض الوغى بشريق اللون محبوب % % 38(@)(@@) % تعجلوا الفال في نحر العدى فغدوا % % حمر الحلى والمطايا والجلابيب % % 39(@)(@@) % أهنيك بالعيد السعيد قدومه % % واشكر برا أنت من قبل واهبه % % 40(@)(@@) % لعمري لقد أصبحت عين زماننا % % فيا حبذا عين الزمان وحاجبه % % PageV01P255 41(@)(@@) % ليهنك يا عين الزمان وأهله % % ويهني الورى عام بسعدك آيب % % 42(@)(@@) % به للبرايا حاجب من هلاله % % ولحت فيا لله عين وحاجب % % 43(@)(@@) % للصاحب بن الصاحب الناصر من % % دعاه رأي في الصلاة الراتبة % % 44(@)(@@) % يمنح من قبل امتداح مجده % % جائزة ثم يراها واجبه % % 45(@)(@@) % لا غرو إن جئت النسيب بمدحة % من غير ما غزل وغير نسيب % % 46(@)(@@) % هزت رؤس السامعين بوصفه % % طربا فلم تحتج إلى تشبيب % % 47(@)(@@) % يا سيدي شكرا لها من أنعم % وقتي بها من بعد مصر خصيب % % 48(@)(@@) % قسما لقد أفردت في نظم وفي % % ود ففي الحالين أنت حبيب % % 49(@)(@@) % لا تنكروا حمرة الأظافر من % % فلان والقمل منه منسرب % % 50(@)(@@) % حمرتها من دماء ما قتلت % % والدم في النصل شاهد عجب % % PageV01P256 51(@)(@@) % إن الأمير سليمان اعتلى رتبا % في الخبر والخبر استعلت على الرتب % % 52(@)(@@) % مجانس الحسن بالحسان في صفة % وفارس الخيل وجه الترك والعرب % % 53(@)(@@) % يا ملاذي الغوث من عائلة % % ليس من تكليفهم لي مهرب % % 54(@)(@@) % طلبوا في أرجلي شيئا وقد % % نقبوا رأسا بما قد طلبوا % % 55(@)(@@) % أشكو لأنعمك التي % % هي للعفاة سحائب % % 56(@)(@@) % حالي التي يرثي العدو % لها فكيف 
