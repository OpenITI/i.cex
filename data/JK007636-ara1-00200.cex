urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms73# عند نباته % % PageV01P374 البحر : - 1(@)(@@) % أفديه لاعب شطرنج قد اجتمعت % % في شكله من معاني الحسن أشتات % % 2(@)(@@) % عيناه منصوبة للقلب غالبة % والخد فيه لقتل النفس شامات % % PageV01P375 البحر : - 1(@)(@@) % حلا ثنائي على علي % كما حلا جوده المواتي % % 2(@)(@@) % فرحت ذا سكر بياضي % % وراح ذا سكر نباتي % % PageV01P376 البحر : - 1(@)(@@) % طلقت أبكار القوافي التي % % كم معها في بيت شعر أويت % % 2(@)(@@) % فلا ووقت كان للشعر لا % % يجمعنا من بعد ذا سقف بيت % % PageV01P377 البحر : - 1(@)(@@) % ومطالع السعدي في أفق العلى % % والملك نعم القصد والحركات % % 2(@)(@@) % من حيث يرقم إسمه وفعاله % % فالعز والإقبال والبركات % % PageV01P378 البحر : - 1(@)(@@) % كانت للفظي رقة % ضن الزمان بما استحقت % % 2(@)(@@) % فصرفتها عن قدرتي % % وقطعتها من حيث رقت % % PageV01P379 البحر : - 1(@)(@@) % وبديع الجمال زين بخال % ساكن فوق أشرف الوجنات % % 2(@)(@@) % ان تشكى بها الحريق فمما % % فتن المؤمنين والمؤمنات % % PageV01P380 البحر : - 1(@)(@@) % قويت قوتي وقوت عائلتي % % في زمن للضعيف ممقوت % % 2(@)(@@) % فكيف أثني عنان قصدي عن % % بابك يا قوتي ويا قوتي % % PageV01P381 البحر : - 1(@)(@@) % فديت بليغا أهلتني سطوره % لأجنحة تسمو سمو الأهلة % % 2(@)(@@) % فأقطف من أوراقه الادب الذي % % وأسمع من ألفاظه اللغة التي % % PageV01P382 البحر : - 1(@)(@@) % في شعر مولانا السنا العالي وفي % % إنشائه الأشهى مزاج القهوة % % 2(@)(@@) % فمتى ثقل بيتا فقل ان الذي % % ومتى يدر سجعا فقل إن التي % % PageV01P383 البحر : - 1(@)(@@) % كنت في ظلمة من الحال لكن % % بين شمسين قد أضاءت حياتي % % 2(@)(@@) % وغمامين ينشآن نباتا % يثمر الأجر من جميع الجهات % % 3(@)(@@) % نباتي المناسب كيف تلقى % % شتا شام به انهشم النبات % % 4(@)(@@) % وبرقا ضاربا من فوق بشت % فضربته لعمري والعباة % % 5(@)(@@) % يا سيدي هنئت عيدا أتى % % بالسعد يجلي من جميع الجهات % % 6(@)(@@) % لا غرو إن أحييتني بالندى % % إن الندى والشمس محيي النبات % % 7(@)(@@) % أهوى الصغار فان لاح العذار فقل % % في لوعة خمدت من بعد ما حميت % % 8(@)(@@) % وقل لمن قال في خدي زمردة % لذاك حية ايري عنك قد عميت % % PageV01P384 البحر : - 1(@)(@@) % نباتي المناسب كيف تلقى % % شتا شام به انهشم النبات % % 2(@)(@@) % وبرقا ضاربا من فوق بشت % فضربته لعمري والعباة % % PageV01P385 البحر : - 1(@)(@@) % يا سيدي هنئت عيدا أتى % % بالسعد يجلي من جميع الجهات % % 2(@)(@@) % لا غرو إن أحييتني بالندى % % إن الندى والشمس محيي النبات % % PageV01P386 البحر : - 1(@)(@@) % أهوى الصغار فان لاح العذار 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms74# فقل % % في لوعة خمدت من بعد ما حميت % % 2(@)(@@) % وقل لمن قال في خدي زمردة % لذاك حية ايري عنك قد عميته % % PageV01P387 البحر : - 1(@)(@@) % بروحي من نص الغزال لها الولا % وأقسم مالي غير جفنك وارث % % 2(@)(@@) % وعد البرايا حسنها فهو أول % وشمس الضحى والبدر ثان وثالث % % 3(@)(@@) % وقد سألوا أهل الكؤس كريقها % % مدام فقالت للكؤس الخبائث % % 4(@)(@@) % وهل في الورى سحر وماغير لحظها % % ولفظ علاء الدين للسحر نافث % % 5(@)(@@) % أرى لعلي رتبة وفضائلا % تقر لها هذي النجوم المواكث % % 6(@)(@@) % فأحجم اجلالا عن القول واللقا % % ويبعثي من سائق البر باعث % % 7(@)(@@) % وأحلف مافي الدهر مثل عليه % % ويحلف أهل العصر ما أنا حانث % % 8(@)(@@) % عريق التقى وفي السيادة حقها % % فيا حبذا منه قديم وحادث % % 9(@)(@@) % سما وحمى الدنيا باقبال شخصه % % فدت شخصه سام وحام ويافث % % 10(@)(@@) % وطالت معاليه إلى الغاية التي % % جرى البرق في آثارها وهو لاهث % % PageV01P388 البحر : - 1(@)(@@) % رب راح بت أشربها % % من يدي عذب اللما خنث % % 2(@)(@@) % قابلت في الكاس وجنته % % فسقانيها على الثلث % % 3(@)(@@) % بأبي الساقي ولثغته % % ومعاني خلقه الدمث % % 4(@)(@@) % سل سيف المزج فارتعشت % % وغدت تنزو من اللهث % % 5(@)(@@) % قلت دعها قال قد سرقت % % من سنا خدي ومن نفثي % % 6(@)(@@) % قسما لو لم تضم على % % كأسها طارت من العبث % 7(@)(@@) % خمرة بالجام ناهضة % نهضة الأرواح بالجثث % % 8(@)(@@) % لو ذكرناها لذي جدث % قام نشوانا من الجدث % % 9(@)(@@) % ظن قوم شربها رفثا % لا سقوا من ذلك الرفث % % 10(@)(@@) % هاتها راحا كلفظ فتي ع طاهر الأخلاق منبعثسقط شطرينص صهات مدح ابن الأثير تجد % % طاهرا يغني عن الخبث % % PageV01P389 11(@)(@@) % مجزل النعمى كأن به % % للثنا نوع من الغرث % % 12(@)(@@) % لعلاء الدين نشر ندى % لم منا كل ذي شعث % % 13(@)(@@) % ترفع اللأوا مواهبه % % مثل رفع الماء للحدث % 14(@)(@@) % ومعال عقد أقربها % % بالثريا غير منتكث % % 15(@)(@@) % ويراع خيف مضربه % % فذكور البيض في طمث % % 16(@)(@@) % نافث سحر البلاغة في % % عقد جلت عن النفث % % 17(@)(@@) % قالت العليا لسودده % % صن وقال المال قم فعث % 18(@)(@@) % ما على من أم ساحته % % أن عام الجدب لم يغث % % 19(@)(@@) % جاد حتى قال لائمه % % إن بعض الجود كاللوث % % 20(@)(@@) % وهمت نعمى يديه على % % كل ذي صفو وذي غلث % % PageV01P390 21(@)(@@) % كالحيا قد عم محترثا % و دقه 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms75# أو غير محترث % % 22(@)(@@) % عذلوه في مكارمه % % وهو ماض غير مكترث % % 23(@)(@@) % أيها المستن في جدد % للعلى والناس في وعث % % 24(@)(@@) % والذي لو لم أخط له % % مدحا للمسك لم أمث % % 25(@)(@@) % لا تسل عن حال عبدك في % % زمن مستحكم المغث % % 26(@)(@@) % محن تأتي على عجل % % وأمان جمة اللبث % % 27(@)(@@) % أصغ ساعف قدم ارع أنل % % إعطف ارحم صن أعذ أغث % % 28(@)(@@) % شكرت نعماك أعظمنا % % في البقا والبعث والجدث % % PageV01P391 البحر : - 1(@)(@@) % قديمة راح في يمين حديثه % من السن عن شيخ التصابي محدثة % % 2(@)(@@) % تثنت على رغم القلى وتربعت % % لو صلي بحمى العاذلات مثلثه % % 3(@)(@@) % فدا لوزير الملك ملبس صحة % % لنار الأعادي والجناة مؤرثة % % 4(@)(@@) % ويمنا على مصر وشام أفاضه % وزير زمان ساعد السعد مبعثه % % 5(@)(@@) % وزير لديه العقد والحل راقنا % % فما عقدة في الحاسدين منفثه % % 6(@)(@@) % أخو السعد في كل الأمور أرادها % % يهذب ما كان الزمان قد أحدثه % % 7(@)(@@) % نهني بلقياه حمى مصر إنها % % بغيبته حاشا المزاج مغلثه % % PageV01P392 البحر : - 1(@)(@@) % لله خال على خد الحبيب له % % في العاشقين كما شاء الهوى عبث % % 2(@)(@@) % أورثته حبة القلب القتيل به % % وكان عهدي أن الحال لا يرث % % PageV01P393 البحر : - 1(@)(@@) % ثلاث مآذن في الحسن زادت % % فرابعها لأجل العين جاثي % % 2(@)(@@) % و مانقصت محاسنها ولكن % % ليحلف واصفوها بالثلاث % % PageV01P394 البحر : - 1(@)(@@) % ووراثة الألحاظ من حدق المها % % غدت نار قلبي من هواها مؤرثة % % 2(@)(@@) % مذكرة الاسياف من لحظاتها % % وقالت علامات الفتور مؤنثة % % 3(@)(@@) % تغزلت فيها وامتدحت أخا العلى % % إمام التقى والنفس غير مغلثة % % 4(@)(@@) % ولم لا ومن نعماه للفكر باعث % % على أدب ما مات الا ليبعثه % % 5(@)(@@) % امام لهاه بالمعالي فقيهة % وامداحه بالمكرمات محدثه % % 6(@)(@@) % أمولاي شهرا جامع الشام أزمعا % % على موته من فكرة العبد محدثة % % 7(@)(@@) % وقد بنيت حمامها في أضالعي % % وعزم أناس أن تكون مثلثة % % PageV01P395 البحر : - 1(@)(@@) % واحيلتي بظلام الطرة الداجي % % واشقوتي بنعيم الملمس العاجي % % 2(@)(@@) % ويا ضلال رشادي في هوى صنم % لاشيء أهتك لي من طرفه الساجي % % 3(@)(@@) % يثج ماء دموعي خط عارضه % % ويلاه من عارض للدمع ثجاج % % 4(@)(@@) % إيها عذولي وباعد فيه عن بصري % % فما أظنك من سيل البكى ناجي % % 5(@)(@@) % قد أسرج الحسن خديه فدونك ذا % % سراج خد على الأكباد وهاج % % 6(@)(@@) % وألجم العذل واركض 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms76# في محبته % % طرف الهوى بعد إلجام وإسراج % % 7(@)(@@) % وقسم الشعر فاجعل في محاسنه % % شذر القلا ئد واهد الدر للتاج % % 8(@)(@@) % الواصل الجود فينا غير منقطع % والفارج الحال منا بعد إرتاج % % 9(@)(@@) % بحر ترى المال سار من أنامله % % كأنه زبد من فوق أمواج % % 10(@)(@@) % وأصبحت هذه الافاق آمنة % بعدله بعد إرهاب وإرهاج % % PageV01P396 11(@)(@@) % كأن أراءه بين الديار بها % % كواكب تتجلى بين أبراج % % 12(@)(@@) % في كفه قلم ناهيك من قلم % للمال مجر وللغماء فراج % % 13(@)(@@) % سهم لمن رام تنفيذ الأمور به % % لكنه هدف للطالب الراحي % % 14(@)(@@) % اذا انتحى الامر فانظر في الطروس إلى % % محرك لسكون الخلق مزعاج % % 15(@)(@@) % لا يعدم الفضل منه أي متجر % ولا رقوم المعاني أي نساج % % 16(@)(@@) % ياقالة الشعر في الاقطار طالبة % مراد قصد اليه يلتجي اللاجي % % 17(@)(@@) % سعيا لأبواب تاج الدين إن لها % % منهاج فضل بريء الفضل من هاجي % % 18(@)(@@) % يممته والغلا والفقر قد جمعا % % لحالتي بين طاعون وحجاج % % 19(@)(@@) % مجاوبا منه في سر وفي علن % ودا ورفدا ينادي كل محتاج % % 20(@)(@@) % لما دعا الدعوة الأولى فأسمعني % % لبست بردي واستمررت أدراجي % % PageV01P397 21(@)(@@) % فاستقبلت جذب أحوالي غمائمه % وبدلت حزن أفكاري بأبهاج % % 22(@)(@@) % وتابع الرفد حتى ما ظننت إذا % % أني من السيل في أبوابه ناجي % % 23(@)(@@) % ذاك الذي يحمل المهدي مدائحه % % جواهرا من حلاه بين إدراج % % 24(@)(@@) % ملكت شعري على الاشعار حين حوى % % ذكر اسمه فهو رب الملك والتاج % % PageV01P398 البحر : - 1(@)(@@) % كم عذول على هواك أداجي % % يا رشا من سطاه لست بناجي % % 2(@)(@@) % لك خد سناه يوهج قلبي % % حزني من سراجك الوهاج % % 3(@)(@@) % وعذار أظنه وهو خاف % حول خديك زئبر الديباج % % 4(@)(@@) % حبذا أنت من هلال سعود % بت فيه أرعى نجوم الدياجي % % 5(@)(@@) % وغرير قضى حجاي وعمري % % في هواه وما تقضيت حاجي % % 6(@)(@@) % كلما اشتقت سائغا من لماه % عوضتني عيني بدمع أجاج % % 7(@)(@@) % أقسم الحب لا يغير قلبي % % من شجون ولا يصح مزاحي % % 8(@)(@@) % سقم ثابت وعقل شريد % طالما احتجت فيهما للعلاج % % 9(@)(@@) % وعذول في الحب يجمع للمغ % % رم بين الطاعون والحجاج % % 10(@)(@@) % مطمئن على الملام وعندي % % شغل عن ملامه بانزعاج % % PageV01P399 11(@)(@@) % ولئن كان عن رضى الحب حزني % % فمن الحزن غاية الابتهاج % % 12(@)(@@) % لي من أدمعي ولفظي در % حسن الاتساق 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms77# والإزدواج % % 13(@)(@@) % تلك منثورة على حلة الحس % % ن وهذا منظم في التاج % % 14(@)(@@) % الرئيس الذي تناجت عليه % % كلم المادحين أي تناح % % 15(@)(@@) % والكريم الذي به نفق القص % % د وراج القريض أي رواج % % 16(@)(@@) % كاتب يبذل النضار صحاحا % % ويصون الشذور في الأدراج % % 17(@)(@@) % عرف الملك منه تنبيه رأي % سائر في الهدى على منهاج % % 18(@)(@@) % ويراعا بصدره يتلقى % % كل راج يسعى اليه ولاجي % % 19(@)(@@) % يا له من يراع فضل وفيض % يوم سلم يدعى ويوم هياج % % 20(@)(@@) % كلما لاح في عجاج سواد % وقر البيض من سواد عجاج % % PageV01P400 21(@)(@@) % ذي سطور مثل البساتين تجنى % % وهي حول الاسلام مثل السياج % % 22(@)(@@) % أنشأتها يد ابن خضر ففاحت % % وسرى عرفها بكل الفجاج % % 23(@)(@@) % سيد أجمع الثناء عليه % % يوم فضل فلات حين احتجاج % % 24(@)(@@) % كم عرضنا مقدمات أمان % لنداه فأحسنت في النتاج % % 25(@)(@@) % من أناس من التقى والمعالي % % وهم بين نطفة أمشاج % % 26(@)(@@) % وأضحى العلم والهدى بسناهم % % يتجلى عن الورى كل داجي % % 27(@)(@@) % يارئيسا أضحت به حلب الش % % هباء ملقى الأفواج فالأفواج % % 28(@)(@@) % كل نعمآء غير نعماك عندي % % في صلاة الصلاة مثل الخداج % % 29(@)(@@) % فأبق يا مرتجي الندى في معال % ما لأبواب سعدها من رتاج % % 30(@)(@@) % نتمنى بلا احتياج لمغنا % ك سرانا فكيف عند احتياج % % PageV01P401 البحر : - 1(@)(@@) % بروضة حسن والعذار سياجها % % أغث مهجة أضحى لديك احتياجها % % 2(@)(@@) % ودارك فتى أشفت على الموت نفسه % % ولو شاء ذاك الحسن هان علاجها % % 3(@)(@@) % فكم ليلة قد صح فيك مزاجها % % بكأس ثنايا منك كان مزاجها % % 4(@)(@@) % أحاشيك أن تقضى حشاشة مدنف % ولم تقض منك من عود التواصل حاجها % % 5(@)(@@) % وإني إلى حسن التجلد ساكن % فما بال عذالي يزيد انزعاجها % % 6(@)(@@) % أراقب من هم التفرق فرجة % وما الدهر إلا غمة وانفراجها % % 7(@)(@@) % نديمي هذا الغيث فامزج بقطره % % لنا قهوة قد كاد يذكو زجاجها % % 8(@)(@@) % وأنتج به در الحباب فهكذا % % قطار الحيا در البحار نتاجها % % 9(@)(@@) % وزاوج ثنايا بالحباب فانما % % يزين اللآلي في النظام ازدواجها % % 10(@)(@@) % وأطفيء بهذا الكاس همي فانني % % أرى السرج تطفأ وهي تطفي سراجها % % PageV01P402 11(@)(@@) % لئن زان هذا العقد جيدا للذة % لقد زان فرقا للفضائل تاجها % % 12(@)(@@) % رئيس اذا أجريت في المدح اسمه % % رأيت المعالي كيف يجري ابتهاجها % % 13(@)(@@) % فما رفعت إلا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms78# عليه بيوتها % % ولا نصبت إلا اليه فجاجها % % 14(@)(@@) % بأقلامه تحمى البلاد وتحتوي % % فيا حبذا منتاجها ورتاجها % % 15(@)(@@) % كأن ظبا أقلامه في طروسه % % أسنة جيش والمداد عجاجها % % 16(@)(@@) % لها من عيون اللفظ كل بديعة % يبشر أفكار الرواة اختلاجها % % 17(@)(@@) % يروقك في سحر البيان وإنما % % يروعك من مثل الضلال مجاجها % % 18(@)(@@) % به انتظمت خير العقود وثقفت % % فهوم البرايا زيغها واعوجاجها % % 19(@)(@@) % ثوى بحرها في ساحل الشام وانبرت % % لآلي نماها عذبها لا أجاجها % % 20(@)(@@) % يكف كريم الأصل من طرفي علي % % يصوب نداها أو يصول هياجها % % PageV01P403 21(@)(@@) % أخو شيم قد سلمت لفخارها % % مفاخر قوم كان حما حجاجها % % 22(@)(@@) % كأن دروج الخط منه لحسنها % % خصور ملاح يستبين اندماجها % % 23(@)(@@) % كأن صلات البر عند نواله % % صلاة يوفي نقصها وخداجها % % 24(@)(@@) % فأحسن من صوب السحاب هباته % % وأحسن من تلك الهبات رواجها % % 25(@)(@@) % لئن قصرت أفكارنا عن مديحه % % لقد طال في ليل السطور ادلاجها % % 26(@)(@@) % لئن كان أخلى فج مصر لقد سرى % % فقالت لمرآه العزيز العجاج ها % % 27(@)(@@) % أمولاي لي شوق مؤرق مقلة % % ضعيف على بحث السهاد احتجاجها % % 28(@)(@@) % فللسهد ما طافت عليه جفونها % % وللدمع ما دارت عليه فجاجها % % 29(@)(@@) % بعثت مدى الأيام تحتي سيادة % % لبيتك قد جلت وجل نتاجها % % 30(@)(@@) % فلا سؤدد إلا اليك معاده % % ولا مدحة الا اليك معاجها % % PageV01P404 البحر : - 1(@)(@@) % حلفت بليل الشعر منه إذا سجى % % وضوء الضحى من وجهه متبلجا % % 2(@)(@@) % ومن أدمعي بالمرسلات من الأسى % % ومن أضلعي بالموريات من الشجى % % 3(@)(@@) % لقد ألجم العذال وجه معذبي % % وقد لاح في جنح الظلام فأسرجا % % 4(@)(@@) % وفرج غمي ذات يوم بزورة % فقلت لعيني انظرا وتفرجا % % 5(@)(@@) % ظلاما وبدرا فوق غصن على نقا % % دجى وتجلى وانثنى وترجرجا % % 6(@)(@@) % وخدا كفاني صبوة شم ورده % % فكيف وقد زاد العذار بنفسجا % % 7(@)(@@) % صحيفة حسن قابلتها ملاحة % % ألم تره سطرا عليها مخرجا % % 8(@)(@@) % بروحي في أفق المحاسن كوكب % على مثله قد طاب لي سهر الدجى % % 9(@)(@@) % نهاني عنه الهم قبل عواذلي % % وأخرجي عنه وما كنت مخرجا % % 10(@)(@@) % وأزعجني شيب بفودي طالع % وما كان وقع الشيب لي عنه مزعجا % % PageV01P405 11(@)(@@) % فيالك مقطوف العذار هجرته % % فما عرجت عيني له حين عرجا % % 12(@)(@@) % دنت داره مني وشط مزاره % فهل أبصرت عيناك ثغرا مفلجا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms79# % % 13(@)(@@) % كأني لم أنعم بدينار خده % % مشوقا على نقد العدى أو مبهرجا % % 14(@)(@@) % ولم أصب من لهو بنقطة خاله % % إلى كرة من حولها الصدغ صولجا % % 15(@)(@@) % ولم أحجب العذال منه بحاجب % رأوا عنده حق الملاحة أبلجا % % 16(@)(@@) % ولم أترشف بعد فيه مدامة % على يده دفاعة حجة الحجى % % 17(@)(@@) % ولم أعط كأسا بالنضار وخده % % لمعطيه بالدر النظيم متوجا % % 18(@)(@@) % ولم أتلق النهد في الصدر جالسا % وأسرى به حالي الشكيم مهملجا % % 19(@)(@@) % إلى الروض فياحا من الزهر باسما % على الزهر رفاقا لدى الطل سجسجا % % 20(@)(@@) % أحبر في مدح الإمام محمد % من اللفظ أبهى الروضتين وأبهجا % % PageV01P406 21(@)(@@) % وما هو ممن لا أنقح مدحه % % فآني اليه بالمديح مروجا % % 22(@)(@@) % أخاف له نقدا فأبطئ في الثنا % % كجمع أبي جاد الحروف من الهجا % % 23(@)(@@) % ألم تر أني قد لجأت لظله % % ودافعت حرا من أذى الدهر موهجا % % 24(@)(@@) % أخلد تاريخ العلى بصفاته % % وأروي حديث الفضل عنه مخرجا % % 25(@)(@@) % وأصرف أمالي التي قد تقسمت % % إلى مرتجى ما باب نعماه مرتجا % % 26(@)(@@) % كريم اذا ما قدم الظن نحوه % % مقدمة من منطق المدح أنتجا % % 27(@)(@@) % ولا عيب فيه غير اسراع جوده % % فليس يمني بالمواعد محوجا % % 28(@)(@@) % وأفراط كتم للندى وهو ظاهر % % وهل مانع للروض أن يتأرجا % % 29(@)(@@) % وقى الدين والدنيا ليهلك ملحد % لديه وينجو راشد مع من نجا % % 30(@)(@@) % فتاوى على سمت الهدى وفتوة % % تجانس معنى لفظها وتدبجا % % PageV01P407 31(@)(@@) % وبر رعى قصد العفاة فغاثها % % وبأس كوى قلب العدو فانضجا % % 32(@)(@@) % وعلم أقامته المباحث ناصرا % فقل علم رد الأسود وهججا % % 33(@)(@@) % هو البحر يروى حول شطيه وارد % ويغرق من قد لج فيه ولججا % % 34(@)(@@) % له قلم يحمي الحمى برقاعه % % ويكتب بالنعمى وبالعلم مزوجا % % 35(@)(@@) % إذا قال لم يترك لذي القول موضعا % وان صال لم يترك لذي الصول مولجا % % 36(@)(@@) % فكم من بليغ في الورى متفصح % وعى لفظة من كتبه فتلجلجا % % 37(@)(@@) % وكم من كمي صار كالدج حيرة % % فلا غرو إن قالوا لكمي المدججا % % 38(@)(@@) % وكم منهج في القول أرشدني له % % وكم أمل أنشاه لي حين أنهجا % % 39(@)(@@) % وكم كسوة لي في دمشق أفادها % % وقد كان ظهري من أذى البرد أعوجا % % 40(@)(@@) % وكم أنطقت نعماه مني مدائحا % سرى ذكرها غربا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms80# وشرقا فأدلجا % % PageV01P408 41(@)(@@) % وروى نباتيا من القول طالما % % سقاه أبوه الغيث نوا مثججا % % 42(@)(@@) % أبا الخير خذها من ثنائي كرائما % أبت عن سوى أكفائها أن تزوجا % % 43(@)(@@) % أوانس أبكار يحق لحسنها % % على ساكن الأمصار أن يتبرجا % % 44(@)(@@) % تهب للقياها الكرام من الحيا % % ويجري بذكراها المطي على الوجا % % 45(@)(@@) % لها إن تقم في دارة الأفق منزل % وإن تسر حلت من ثرياه هودجا % % PageV01P409 البحر : - 1(@)(@@) % مدت اليك المعالي طرف مبتهج % % وأعربت بلسان المادح اللهج % % 2(@)(@@) % وأشرق المنبر المسعود طالعه % % بخير بدر بدا في أشرف الدرج % % 3(@)(@@) % خطبت بالشام لما أن خطبت له % % فاهنأ بمتفق اللفظين مزدوج % % 4(@)(@@) % يا حبذا أفق عطرت جانبه % % حتى استدل بنو الآمال بالأرج % % 5(@)(@@) % صدر العلى فتمكن بالجلوس به % % فقد جلست بصدر غير ذي حرج % % 6(@)(@@) % وأصدع برأيك لا لفظ بمحتبس % إذا خطبت ولا فكر بمنزعج % % 7(@)(@@) % تصبو الورى لسواد قد ظهرت به % % كأنما من حكته أسود المهج % % 8(@)(@@) % عين الزمان تحلى في ملابسه % % وإنما تتحلى العين بالدعج % % 9(@)(@@) % أعظم بها من مساع عنك سائرة % % فقد سلكت طريقا غير ذي عوج % % 10(@)(@@) % ولجت للعلم أبوابا متى خطرت % % بها العزائم أبواب العلى تلج % % PageV01P410 11(@)(@@) % ودافعت يدك الآمال جائدة % % تدافع السيل في أثناء متعرج % % 12(@)(@@) % مناقب يهتدي وفد الثناء لها % % بواضح من ضياء البدر منبلج % % 13(@)(@@) % كأن نغمة عافيه بمسمعه % % أصوات معبد في الثاني من الهزج % % 14(@)(@@) % يا طالبا منه جودا أو مباحثة % % رد بحره العذب واحذر سورة اللجج % % 15(@)(@@) % بحر الندى والهدى ان شمت مورده % % شمت النجاة وان هيجته يهج % 16(@)(@@) % مبصر الرأي مأخوذ بفطنته % % إلى المراشد مدلول على النهج % % 17(@)(@@) % هذا دليل الشباب الجون منسدل % % فكيف لما يضيء الشيب بالسرج % % 18(@)(@@) % إيه بعيشك بدر الدين سد فلقد % % أدلجت للفضل فينا كل مدلج % % 19(@)(@@) % أنت الذي فضل الأخبار شاهده % % فيممته بنو الآمال بالحجج % % 20(@)(@@) % من فيض جودك جاد الفائضون ندى % % كأنك البحر يروى عنه بالخلج % % PageV01P411 21(@)(@@) % لازال بابك للمغلوب جانبه % % وواجد الهم باب النصر والفرج % % PageV01P412 البحر : - 1(@)(@@) % أقسمت من فرعها المسبول بالداجي % % كالآبنوس بمشط الرجل في العاج % % 2(@)(@@) % لقد تورط قلبي في حبائلها % % فما أرى أنه من حبها ناج % % 3(@)(@@) % لم أنس يوم النوى دمعا بوجنتها % % كما نثرت 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms81# لآل فوق ديباج % % 4(@)(@@) % وناظري حين أخلى الجزع ساكنه % % كعارض بعقيق الدمع ثجاج % % 5(@)(@@) % محجوبة ان أقل عمري انقضى فيها % % قضى حجاي ولم يقض اللقا حاجي % % 6(@)(@@) % لا عيب فيها سوى ريق على برد % % مبرد في الشتا والصيف ثلاج % % 7(@)(@@) % قسمت أغزال شعري والمديح لها % % نظم الشذور ونظم الدر في التاج % % 8(@)(@@) % يحيى الندى جعفر والفضل قد فنيا % % وظله لا عدمنا ظله ساج % % 9(@)(@@) % ذو الجود كم جمل من وفر راحته % % قد عوجلت قبل تحصيل باخراج % % 10(@)(@@) % والبر والمكرمات الغر كم هرعت % % إليه أفواج قصد بعد أفواج % % PageV01P413 11(@)(@@) % كم من بنات وأبناء قد اجتمعوا % % على قراه وزوجات وأزواج % % 12(@)(@@) % كم بين أبيات أمداحي له شيم % كأنهن نجوم بين أبراج % % 13(@)(@@) % بحر أرى مقبلات الخير أكثر من % % ماضي سراها فما عد لامواج % % 14(@)(@@) % في كفه القلمان الراجحان على % % سواهما بين كفات وأدراج % % 15(@)(@@) % يا حبذا قلم التصريف مع قلم ال % % إنشاء من سابق في الطرس هملاج % % 16(@)(@@) % وحبذا الطرس منشورا بنفع رجا % % وملتقي كل ذي هم بإفراج % % 17(@)(@@) % وحبذا من حباسي وأنعمه % فراجة لمثار الخطب مهتاج % % 18(@)(@@) % في الحمد والأجرذ وفكر وذو نظر % % إلى صميم العلى والفضل ولاج % % 19(@)(@@) % قضى له الله أن تعلو مراتبه % % وأن يكون ملاذ القاصد اللاجي % % 20(@)(@@) % مهنأ الجود مدلول النوال على % % أهل المقاصد دار حال محتاج % % PageV01P414 21(@)(@@) % إذا أراد قبول البر خالقنا % % هيا نوافله في وقت إحواج % % 22(@)(@@) % يا مذكري من كريم الدين أنعمه % % بمصر دم أنت تاجي العلى ناجي % % 23(@)(@@) % لقد منحت كثيرا من قليلك إذ % % قليله في كثير الوفر رواج % % 24(@)(@@) % فأنت عندي وعند الناس أكرم من % % ذاك الممكن يا نعم الفتى الراجي % % 25(@)(@@) % مولاي مولاي تاج الدين ممتدحا % حاشا لمنهاج ذاك الباب من هاج % % 26(@)(@@) % أحسن بها جبة قد فرجت كربي % % عودية أطربتني بعد ازعاج % % 27(@)(@@) % شكرا لنساجها بل للجواد بها % % مستفتحا باب شعري بعد ارتاج % % 28(@)(@@) % إن يكسني ما سيبليه الزمان فقد % % كساه ما ليس يبلى نسج نساج % % 29(@)(@@) % لأجعلن لشعري عنده ملكا % على الرواة سني الملك والتاج % % PageV01P415 البحر : - 1(@)(@@) % أشرق الشام فما أي % % من ياطالع نهجك % % 2(@)(@@) % ثم لما فاح مس % % كا قيل من جاقلت منجك % % 3(@)(@@) % كم هلال كاد 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms82# يا قا % % دم أن يحسد سرجك % % 4(@)(@@) % وابنه الكاتب قد و % % ذ إذا يكتب درجك % % 5(@)(@@) % واسترق الجود أحرا % % را أتوك الكل تنجك % % 6(@)(@@) % صيدك الأجر ودار ال % % عدل لا تبرح مزجك % % 7(@)(@@) % حج في هذي الرعايا % % قبل الرحمن حجك % % PageV01P416 البحر : - 1(@)(@@) % أسرت في الحب ياينجو فمن ينجي % % يا طفلة الترك من هجرانك الكرجي % % 2(@)(@@) % هل لثمة منك مثل الراح عند فمي % % وعند عاذلي الغيران كالبنج % % 3(@)(@@) % كالشهد لفظ علاء الدين نرقبه % % والسم عند عداة الدين نسترجي % % 4(@)(@@) % أهلا بمقدم من ود الهلال بأن % % يمسي لمركوبه المسعود كالسرج % % 5(@)(@@) % ملك الكتابة أي الأرض واصلها % % مسعاه كان سعيد الوصل والدرج % % 6(@)(@@) % إن بت في مرج ذكراه فإني من % % هم التباعد في هرج وفي مرج % % 7(@)(@@) % قد فقعت بالتنائي مهجة نسبت % % في الخاص قدما وقد عادت من الجرج % % PageV01P417 البحر : - 1(@)(@@) % مولاي مولاي نجم الدين دعوة من % % في قصد جودك لا يحتاج للحجج % % 2(@)(@@) % ومن اذا أبصرت عيناه عبدكم % في الباب أبصر ما يرجوه من فرج % % 3(@)(@@) % هذا رجا الدجن كم أرسى وكم لك من % % عقد من المن عندي واضح النهج % % 4(@)(@@) % در المقال وتبر الجود تبعثه % % فابعث لكانوننا شيئا من السبج % % PageV01P418 البحر : - 1(@)(@@) % يا قادما باليمن للمهتاج في % % أحواله والمن للمحتاج % % 2(@)(@@) % قسما بسؤددك الجلي فانه % % منهاج فضل ماله من هاج % % 3(@)(@@) % ما ترفع الأيام رأس رياسة % إلا اذا وسمت بهذا التاج % % PageV01P419 البحر : - 1(@)(@@) % حللت بمصر عن الحاكمين % % كأنا ذوي نسب مبهج % % 2(@)(@@) % إمام التقي دم لنا مرتجى % % و ما باب فضلك بالمرتج % % 3(@)(@@) % فليس الدقيق كمثل الجليل % % وليس العللي كالخزرجي % % PageV01P420 البحر : - 1(@)(@@) % وافى الي بمدحه قد أخبرت % % عن كل بيت جيد من أين جا % % 2(@)(@@) % فسكت عنه فجاءني بهجائه % % لأجيبه هيهات أخلفه الدجى % % 3(@)(@@) % من كان في حال المدائح ساقطا % عندي فكيف يكون في حال الهجا % % PageV01P421 البحر : - 1(@)(@@) % أشكو السقام وتشكو مثله امراتي % % فنحن في الفرش والأعضاء نرتج % 2(@)(@@) % نفسان والعظم في نطع يجمعنا % % كأنما نحن في التمثيل شطرنج % PageV01P422 البحر : - 1(@)(@@) % إلهي سلمت من الضرب في % % بلاد لعيشي فيها حرج % % 2(@)(@@) % وأرجو الخلاص فقرب به % % لباب السلامة باب الفرج % % PageV01P423 البحر : - 1(@)(@@) % عذولي منك في أمر مريج % % وسمعي منك في ذكر 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms83# أريج % % 2(@)(@@) % بذكرك طاب منطق وأغرت % % ملامته هوى قلبي اللجوج % % 3(@)(@@) % كما أغرى الملام نوال كفي % % ولي الدين ذي المدح البهيج % % 4(@)(@@) % كريم لو تفاخره كرام % % مضوا يعدوا بغيظ في ضجيج % % 5(@)(@@) % لو أن ابن الفرات النيل داجى % % تفرجنا على ذاك الخليج % % 6(@)(@@) % مليجي له في الجود باب % يكاد زحامه ينهى ولوجي % % 7(@)(@@) % بدا جودا فان احجب لعذر % % أتيت بطوخ فيه على مليج % % PageV01P424 البحر : - 1(@)(@@) % يا واعظ الشام والثناء له % % في سائر الأرض سائر الارج % % 2(@)(@@) % من بر كرسيك السني فقد % % رأى ابن جوزيها على درج % % 3(@)(@@) % يانور أفكارنا وأعيننا % % أغنيت أوقاتنا عن السرج % % 4(@)(@@) % فرجت بالوعظ عن خواطرنا % % فنحن نفديك يا أبا الفرج % % PageV01P425 البحر : - 1(@)(@@) % أخرجت قلبي الذي صيرته وطنا % أيام لم تك ذا زيغ ولا عوج % % 2(@)(@@) % فكدت بالرغم أخلي منك جانبه % % خوفا عليك من المستوطن الحرج % % PageV01P426 البحر : - 1(@)(@@) % جاء الطواشي بها نصفية % % كأنها الصبح اذا تبلجا % % 2(@)(@@) % مستورة بذيله فحبذا % % طرة صبح تحت أذيال الدجي % % PageV01P427 البحر : - 1(@)(@@) % بنفسج الخد داع % % مشيب خدي المثلج % % 2(@)(@@) % عندي هوى معرض لا % % يرضى بشم البنفسج % % PageV01P428 البحر : - 1(@)(@@) % خلعة قاضي القضاة لا برحت % % بك التهاني أوفى رجا الراجي % % 2(@)(@@) % للحكم كالملك أنت صالحة % يا خلعة الطيلسان والتاج % % PageV01P429 البحر : - 1(@)(@@) % الجمد لله كم عطاء له % % في كل قصد وكل منهاج % % 2(@)(@@) % ملك العلى والعلوم جدده % % وخلعة الطيلسان والتاج % % PageV01P430 البحر : - 1(@)(@@) % عجبت لأنكاد الزمان وإن طمت % % و لا عجب في فكرة تتولج % % 2(@)(@@) % أجاور من أهوى ولا وصل بيننا % % كأني ومن أهواه ثغر مفلج % % PageV01P431 البحر : - 1(@)(@@) % أفدي الذي جبينه في شعره % % طرة صبح تحت أذيال الدجى % % 2(@)(@@) % مالي به مع قرب داري ملتقى % % فهل رأيت ثغره المفلجا % % PageV01P432 البحر : - 1(@)(@@) % كلفت بشائب لا عذل يثني % % جماجي في هواه ولا لجاجي % % 2(@)(@@) % أقبل من عذاري وجنتيه % % سياج الورد أو ورد السياج % % PageV01P433 البحر : - 1(@)(@@) % و أهيف القد فتان العيون قضى % % على الجوانح واستولى على المهج % % 2(@)(@@) % لثغره ولخديه وطرته % % شبه من الدر والياقوت والسبج % % PageV01P434 البحر : - 1(@)(@@) % يا لائمي في رشيق القد معتدل % أقصر فان غرامي غيرذي عوج % % 2(@)(@@) % أشكو الشدائد من وجد أكابده % % و لست أيأس في شكواي من فرج % % PageV01P435 البحر : - 1(@)(@@) % لتهن عين إلى مرآك قد طمحت 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms84# % % ومهجة فيك بالأشجان قد صلحت % % 2(@)(@@) % يا من اذا باعت الأبصار أسودها % % بحبة فوق خديه فقد ربحت % % 3(@)(@@) % لا أشتكي فيك أشجاني وان مكثت % % ولا اكفكف أجفاني وإن نزحت % % 4(@)(@@) % أنا الذي كرمت أنفاس صبوته % % وكلما مس نارا ندها نفحت % % 5(@)(@@) % يزيدني العذل تبريحا ألذ به % % فليت عذال حبي فيك ما برحت % % 6(@)(@@) % ويعجب الدمع عيني حين يجرحها % % وما العدالة إلا حيثما جرحت % % 7(@)(@@) % ما أدمعي في هواك السمح باخلة % % وكيف وهي التي بالعين قد سمحت % % 8(@)(@@) % سقيا لأوقاتك اللآتي إذا ذكرت % % حلت على أنها بالحسن قد ملحت % % 9(@)(@@) % حيث الصبا بشذا الأزهار نافحة % % في فحمة الليل والأقداح قد قدحت % % 10(@)(@@) % وللقيان بورق الطير مشتبه % هذي وتلك على العيدان قد صدحت % % PageV01P436 11(@)(@@) % والزهر كالضيف أمسى وهو مبتسم % % على زقاق من الصهباء قد ذبحت % % 12(@)(@@) % والراح في يد ساقيها مشعشعة % % كأن وجنة ساقيها بها نضحت % % 13(@)(@@) % ساق إذا اغتبقت ندمان قهوته % % أضآء مبسمه الصبحي فاصطبحت % % 14(@)(@@) % لدن المعاطف يمناه ومقلته % % تسقيك إن حملت راحا وإن لمحت % % 15(@)(@@) % ذو ناظر بالحيا والسحر مكتحل % % فالموت إن غضت الأجفان أو فتحت % % 16(@)(@@) % كم قابلته لكي تحكيه نرجسة % % فصح أن عيون النرجس انفتحت % % 17(@)(@@) % إذا اعتبرت معاني من كلفت به % % عجبت من حسن ما دقت وما وضحت % % 18(@)(@@) % تلك التي خلفت عيناي غارقة % % ترعى نجوم الليالي كلما سبحت % % 19(@)(@@) % آها لذكر ليال ما فطنت لها % % حتى أناخ عليها الدهر فانتزحت % % 20(@)(@@) % كم يقصد الدهر إغضابي بقادحة % % في الحال لكنها في الصبر ما قدحت % % PageV01P437 21(@)(@@) % إن عاب رونق ألفاظي ذوو إحن % ففي السماء بدور طالما نبحت % % 22(@)(@@) % دع الليالي إني قد غفرت لها % % بالافضل الملك ما كانت قد اجترحت % % 23(@)(@@) % جاءت به مغرب الأوصاف مشرقها % % مثال ما اقترح العليا وما اقترحت % % 24(@)(@@) % ملك لهاه عن الآمال قد فصحت % % وراحتاه عن الأيام قد صفحت % % 25(@)(@@) % له خطى جازت العليا وما فخرت % % وأنمل كفت الدنيا وما بجحت % % 26(@)(@@) % تندي حياء غداة الجود طلعته % % كأنما منعت كفاه ما بجحت % % 27(@)(@@) % كانت بنو الدهر غضبى مع زمانهم % لكن على يده الفياضة اصطلحت % % 28(@)(@@) % كم منطق فصحته بالثناء وكم % % نحو من الجود في أهل الرجاء نحت % % 29(@)(@@) % كم نعمة 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms85# سبحت عن بيت سؤدده % % في الخافقين وكم من مدحة سرحت % % 30(@)(@@) % لاعيب في مجده العالي سوى أذن % في الجود لا تسمع العذال إن نصحت % % PageV01P438 31(@)(@@) % أما الرعايا فقد ردت بدولته % % لها وجوه الأماني بعد ما جمحت % % 32(@)(@@) % كل البيوت من الأموال باسمة % % إلا بيوتا من الأموال قد كلحت % % 33(@)(@@) % بين الصوارم والأقلام فكرته % % إن دبرت أفلحت أو صاولت فلحت % % 34(@)(@@) % سجية في بني أيوب قد نفرت % % وبين آل تقي الدين قد رجحت % % 35(@)(@@) % يمد زندا إلى العلياء وارية % أنوارها وهي ما عيبت وما قدحت % % 36(@)(@@) % إذا أطال كريم وعده اختصرت % % وإن طوى قلب باغ غلها شرحت % % 37(@)(@@) % ياابن الملوك جلت أنوار غرتهم % % غياهب الافك عن طرق الهدى ومحت % % 38(@)(@@) % لو لم يكن لك حق الملك من قدم % % لكن حقك بالنفس التي طمحت % % 39(@)(@@) % لو خط بعض اسمك العالي على علم % % وقابلته حصون الأرض لافتتحت % % 40(@)(@@) % أنت الذي قدمت امداحه فكري % % فخرا على فكر من بعد قد مدحت % % PageV01P439 41(@)(@@) % أنت الذي فسحت نعماء والده % % حالي وفكرتي الغمآء فانفسحت % % 42(@)(@@) % وأودعتني جدوى كفه مننا % كأنها بعد من جفني قد رشحت % % 43(@)(@@) % كم مدحة لي من آثار أنعمه % % سيارة لنجوم الليل قد فضحت % % 44(@)(@@) % بطالع السعد لاجدي ولاحمل % جازت مدى الشهب والغفران ما انتطحت % % 45(@)(@@) % لله درك من ملك له شرف % % ثنى قرائحنا عنه وإن كدحت % % 46(@)(@@) % دامت لملكك أوقات الحبور اذا % % تقلدت من حلى إقبالها اتشحت % % 47(@)(@@) % وجاد قبر الشهيد الغيث ينشده % % يا ساكني السفح كم عين بكم سفحت % % PageV01P440 البحر : - 1(@)(@@) % بكى الشعر أيام المنى والمنائح % % ففي كل بيت للثنا صوت نائح % % 2(@)(@@) % وغاضت بحور المكرمات وطوحت % % بأهل الرجا والقصد أيدي الطوائح % % 3(@)(@@) % ولما ادلهمت صفحة الافق بالأسى % % علمنا بأن الشهب تحت الصفائح % % 4(@)(@@) % حيا المزن أسعدني على فقد سادة % % بدمع كجدواهم على الناس طافح % % 5(@)(@@) % أبعد بني شاد وقد سكنوا الثرى % % قريض لشاد أو سرور لفارح % % 6(@)(@@) % أبعد ملوك العلم والبأس والندى % % تشب العلى نار القرى والقرائح % % 7(@)(@@) % أما والذي أخلى حمى الملك منهم % وعمر بالعليا رسوم الضرائح % % 8(@)(@@) % لئن أوحشوا منهم بيوت مقامهم % % لقد أوحشت منهم بيوت المدائح % % 9(@)(@@) % يجرح قلبي بعدهم صوت ساجع % يذكرني عهد الأيادي 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms86# السوافح % % 10(@)(@@) % فيا فرخ ضعفي حيث صرت فريسة % % وصار حمام الأيك في الطير جارحي % % PageV01P441 11(@)(@@) % تلا فقد إسماعيل فقد محمد % % فيا للأسى من فادح بعد فادح % % 12(@)(@@) % وزالا فما انسان عيني بممسك % بكاء ولا انسان قول بكادح % % 13(@)(@@) % كأن زناد الفضل لم يور منهما % % سنا شيم ما فيه قول لقادح % % 14(@)(@@) % كأن لم يقم بالمكرمات مطوق % % لدى الباب يشدو بالثناشد وصادح % % 15(@)(@@) % خذ الزاد يا ضيف المكارم وارتحل % % بنوح فقد أقوت ربوع المنائح % % 16(@)(@@) % نزحت دموعا أو نزحت ركائبا % فلله في الحالين حسرة نازح % % 17(@)(@@) % بروحي ديار الفضل صوح روضها % % كأن لم يجب فيها المنى صوت صائح % % 18(@)(@@) % بروحي غريب الدار والنعش عائد % إلى أرضه الثكلى غريب النوائح % % 19(@)(@@) % بروحي نظير الغصن في دوحة العلى % % رماه فأوداه الزمان ببارح % % 20(@)(@@) % رمى فرعه من بعد ما مد ظله % % على كل غاد م العفاة ورائح % % PageV01P442 21(@)(@@) % و جمل دنيانا ببث جميلة % و غطى على مكروهها والقبائح % % 22(@)(@@) % و ساس رعايا أرضه وأطاعه % % على جانب العاصي هوى كل جامح % % 23(@)(@@) % و أعطى عطاء السحب في حال عسرة % % تقوم بأعذار النفوس الشحائح % % 24(@)(@@) % و زواج بين الحلم والبأس ملكه % % فمن أعزل مثل السماك ورامح % % 25(@)(@@) % ورتل من أسلافه سور العلى % % خواتمها موصولة بالفواتح % % 26(@)(@@) % و قام إلى جمع المحامد طامحا % فوالله لم يعدل به عزم طامح % % 27(@)(@@) % و والله ما نقضي حقوق محمد % % إذا نحن أثنينا عليه بصالح % % 28(@)(@@) % و لو أمكن الغيث الفدى بوليه % % فدى صالحا من آل شاد بطالح % % 29(@)(@@) % ورد الردى عن فائض البر عنده % % أعز مكان في الدنى سرح سائح % % 30(@)(@@) % هو الموت لو يثنيه بأس ونائل % % ثنته سجايا كفه في الجوانح % % PageV01P443 31(@)(@@) % هو الموت ما يعييه ثاو بمغفل % % و لا واصل في النبذ من خطو سابح % % 32(@)(@@) % ولا أسد يرنو بأحمر أجزر % تكاد به تشوى لحوم الذبائح % % 33(@)(@@) % ولا أسد الأبراج في الشهب كاسرا % % بتكرارها سرت نفوس الصحائح % % 34(@)(@@) % كفى ببني أيوب للناس واعظا % وان صمتت أفواههم في الضرائح % % 35(@)(@@) % ومرقى المنايا نحو آفاق عرشهم % % وما كان يرقى نحوها طرف طامح % % 36(@)(@@) % سلام على جنات اجداثهم ولا % % سلام لنار الحزن بين الجوانح % % PageV01P444 البحر : - 1(@)(@@) % سرت قمرا من 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms87# مسبل الشعر في جنح % % بسفح النقا آها على زمن السفح % % 2(@)(@@) % محجبة لا طعن فيها لعائب % % على أنها تمشي فتهتز كالرمح % % 3(@)(@@) % سقى الله ليلا صالحت فيه باللقا % % فما كان أشهى من لقاء ومن صلح % % 4(@)(@@) % أسد بطول اللثم فاها مخافة % على ليلتي أن يهجم الثغر بالصبح % % 5(@)(@@) % ويخطر في وشي الحرير قوامها % % ونجم الدجى بالغيظ يعثر في منح % % 6(@)(@@) % زمان مضى حلوالمراشف والجنى % % وعيش تقضى آمن السرب والسرح % % 7(@)(@@) % ولاعيب في تلك الليالي التي خلت % % سوى أنها مرت على الطرف كاللمح % % 8(@)(@@) % تولى زمان الوصل وانقرض الصبى % % فيا عجبا للدهر قرحا على قرح % % 9(@)(@@) % سلام على العيش الوري زناده % % على أنه العيش البريء من القدح % % 10(@)(@@) % وغانية مثل الحياة أحبها % % وان كان في كد بها العمر أو كدح % % PageV01P445 11(@)(@@) % ومما غناني عاذل متنصح % وما الغش الا ما سمعت من النصح % % 12(@)(@@) % يطوف بسمعي لفظه وهو بارد % % وفي القلب ما فيه من الوقد واللفح % % 13(@)(@@) % و في الخفرات اللاء تغني بلفظها % % عن العقد والفرع الاثيث عن الرشح % % 14(@)(@@) % غزال رعت في الحب أخضر عيشي % % لقد أعرض الظبي الاغن عن الطلح % % 15(@)(@@) % و قد كان لي والدهر فيه وقائع % % فلما اجتمعنا آذن الدهر بالصلح % % 16(@)(@@) % تعشقتها والخد يشبه خدها % % أأعشقها والشيب ملتمع اللمح % % 17(@)(@@) % كأن جفوني اذ تكاثر دمعها % % بنان ابن فضل الله متصل المنح % % 18(@)(@@) % و قائلة ما بال عزمك صابرا % % على الفدح في الدنيا على أثر الفدح % % 19(@)(@@) % فقلت رأيت السمر أقوم ما ترى % % إذا صبرت عند النفاق من اللقح % % 20(@)(@@) % فقالت دع التقليل عنك وقم إلى % % نوافج فضل الله في زمن الفرح % % PageV01P446 21(@)(@@) % و بادر لمحيي الدين تلق شمائلا % مدربة لم تدر ما هيئة الشح % % 22(@)(@@) % فقمت ولكن بعد أن وضح الدجى % % و عدت بمشهور الثنا طاهر سمح % % 23(@)(@@) % يوري زناد الفضل بالمجد والعلى % % و لكنه الفعل البريء من القدح % % 24(@)(@@) % رئيس رأى آمالنا وهي تشتكي % % من الدهر أسقاما فقال لها صحي % % 25(@)(@@) % يسابق آمال العفاة بضعف ما % % تمنت ويمسي في النوال كما يضحي % % 26(@)(@@) % مغيث الرجا والخوف والذل والخطا % % ببذل الندى بالأمن بالجاه بالصفح % % 27(@)(@@) % اذا وصف المداح بعض صفاته % % فماذا بأكباد الاعادي 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms88# من الشرح % % 28(@)(@@) % و ان فتح الراوي معاني فخاره % % فدع ما رواه آل خاقان للفتح % % 29(@)(@@) % و لما علا نحو السماء ثناؤه % % أتى بالنجوم الزهر والسحب السح % % 30(@)(@@) % سحائب آلاء تجول على الرجا % % و أنجم آراء تدل على النجح % % PageV01P447 31(@)(@@) % و سعد أفاد الملك أخبية الهنا % % و أنحى على أهل المكايد بالذبح % % 32(@)(@@) % كذلك فليحك النظير نظيره % % بغر المعالي والمراشد والمنح % % 33(@)(@@) % فيا أيها الساعي لشقة شأوه % % تنح قصيا لست من ذلك الطرح % % 34(@)(@@) % و يا أيها البسام بشرا وفضله % % يعين على أعوامها الشهب الكلح % % 35(@)(@@) % فدي لك من لو أن ميعاد جوده % % كفرعون لم يحتج لهامان في الصرح % % 36(@)(@@) % و أنت الذي أغنيت بالرفد يمينهم % % و بالغت حتى خلت أنك في مزح % % 37(@)(@@) % تحيلت في كتم الذي أتت واهب % % و هيهات ما للمسك بد من النفح % % 38(@)(@@) % و كم جربت منك الملوك ميامنا % ونصحا على فقد الميامن والنصح % % 39(@)(@@) % و غصن يراع يستظل به الورى % % ويشهد قتل المارقين بلا جرح % % 40(@)(@@) % و أنك يا يحيى لتحيي ذوي الرجا % % وتحمي من اللأوا وتنجي من القدح % % PageV01P448 41(@)(@@) % و انك يا يحيى لفائض جعفر % % من الوفر تزداد امتلاء على النزح % % 42(@)(@@) % فلا زال للراجي جناحك موئلا % % وضدك للهم المقيم وللبرح % % 43(@)(@@) % تسامى على المداح قدرك رتبة % % فاقصارهم عن مدحه غاية المدح % % 44(@)(@@) % و كدت لعرفان المكارم لم ترم % % بحمد وما حمد السحاب على السح % % PageV01P449 البحر : - 1(@)(@@) % خلقت على مرادي واقتراحي % % فذكرك حضرتي في وقت راحي % % 2(@)(@@) % ولى من طرة لك أو جبين % % شجون في المساء وفي الصباح % % 3(@)(@@) % بروحي أنت ذو جفن كليل % % وعيني منه دامية الجراح % % 4(@)(@@) % غزالي جفنه وشكا فتورا % % فوا حرباه من شاكي السلاح % % 5(@)(@@) % و تياه سمحت له بدمع % % يرى أن السماح من الرباح % % 6(@)(@@) % و مالي لا أسيل اجاج دمعي % % على عذب بمبسمه قراح % % 7(@)(@@) % يحمر أوجه الكاسات هزؤا % % ويضحك في الرياض على الأقاحي % % 8(@)(@@) % أقمت به على نيران برح % % فما لي كابن قيس من براح % % 9(@)(@@) % سقى صوب الحيا زمنا أقامت % % عليه صبابتي ومحاه ماح % % 10(@)(@@) % و كاسات أشد يدي عليها % % مخافة أن تطير من الجماح % % PageV01P450 11(@)(@@) % صفت فصفا الزمان وبشرتنا % % فحلق درع بشراها 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms89# النواحي % % 12(@)(@@) % و قد كال النديم بها نضارا % % علمنا أنها داعي السماح % % 13(@)(@@) % بكف مزركش الاصداغ تهوى % % لقبلتها وجوه للملاح % % 14(@)(@@) % عشوت لكأسه لا للثريا % % ونسر الشهب خفاق الجناح % % 15(@)(@@) % كأني قد سلبت الديك عينا % فثار من المنام إلى الصباح % % 16(@)(@@) % كأني قد حملت على همومي % % بها رايات لهو وانشراح % % 17(@)(@@) % كأني اذ صحا بالمحل أفقي % % رأيت لقا الليالي غير ماح % % 18(@)(@@) % إذا أبصرت جدا من زمان % % فخالطه بشيء من مزاح % % 19(@)(@@) % و ليل ظلت فيه لفرط عزمي % % كأن الشهب من شرر اقتداحي % % 20(@)(@@) % و موحشة المفاوز في رباها % % طغت إبلي وسلن مع البطاح % % PageV01P451 21(@)(@@) % أرشح ذا الخمائل مشمعلا % بها وأحيد عن ذات الوشاح % % 22(@)(@@) % لعز أو لوفر أجتنيه % % على وفق احتياجي واجتياحي % % 23(@)(@@) % علي بها السرى وعلى أيادي % % بني الفاروق إدراك النجاح % % 24(@)(@@) % بني فضل الإله اذا أجيلت % % غداة المحل أيسار القداح % % 25(@)(@@) % نجوم العلم أنواء العطايا % % جياد السبق آساد الكفاح % % 26(@)(@@) % لآلي السلك في نسب نظيم % % ودعنا من أنابيب الرماح % % 27(@)(@@) % لأحمدهم منا هي الحمد عنهم % % فيا كرم اختتام وافتتاح % % 28(@)(@@) % أخو الاغضاء عن تقصير مثن % % وفي طلب العلاء أخو الطماح % % 29(@)(@@) % و ذو الجود الذي يروي عطاء % % لطالب راحتيه عن رباح % % 30(@)(@@) % و ذو القلم الذي ان قال أغني % % عن استسماع قعقعة السلاح % % PageV01P452 31(@)(@@) % سويد القلب قلب العيش منه % % وإلا فهو قادمة الجناح % % 32(@)(@@) % فطورا فائض العذب المهنى % % وطورا فائض السم الذباح % % 33(@)(@@) % أبا العباس قد حفظت ثغور % % برأيك فهي باسمة النواحي % % 34(@)(@@) % تسوك بالقنا مما حبتها % % بزاتك أو تمضمض بالصفاح % % 35(@)(@@) % و سامي الملك منك شهاب عزم % % كفى المراد قبل الالتماح % % 36(@)(@@) % و ذا همم اذا ضلت سيوف % % تنادي الجيش حي على الفلاح % % 37(@)(@@) % حللت بواديي مصر وشام % محل النيل والسحب الدلاح % % 38(@)(@@) % يمين مكارم أو صدر سر % % ملي بالمصون وبالمباح % % 39(@)(@@) % و أغرقت ابن بحر في بيان % % أطاف به على لجج فساح % % 40(@)(@@) % بيان جوهري الوصف تروي % % عوالي الحرب منه عن الصحاح % % PageV01P453 41(@)(@@) % و أن النرجس الحاكيك لفظا % لينبي عن عيون ربا وقاح % % 42(@)(@@) % و أن لراحتيك على الغوادي % % فخارا ما عليه من جناح % % 43(@)(@@) % فؤاد البرق منه في التهاب % % ووجه الدجن منه في افتضاح % % 44(@)(@@) % أمالك رتبة 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms90# العليا بلفظ % متين قوى وأخلاق سجاح % % 45(@)(@@) % و باعث فكرتي سيما جبين % % حمدت به السرى عند الصباح % % 46(@)(@@) % عطفت علي في زمن حرون % % وجدت برغم أيام شحاح % % 47(@)(@@) % و قربني جنابك بعد بعد % ونهنه حاسدي بعد الجماح % % 48(@)(@@) % و نطقني نداك وكنت حجلا % فصرت اليوم أنطق من وشاح % % 49(@)(@@) % اليك حسان شعر لم تعرها % % ولا أحوجتها حظ القباح % % 50(@)(@@) % من اللاتي زكت نسبا ورقت % % عليك شمائل الخود الرداح % % PageV01P454 51(@)(@@) % نزحت كلا الندى والعلم بحرا % فأخرجنا لآلي الإمتداح % % PageV01P455 البحر : - 1(@)(@@) % ما البرق في كانونه قد قدح % % والغيم في كف الثريا قدح % % 2(@)(@@) % أضوأ من ذهنك نارا ولا % % أرق من لفظك كأسا طفح % % 3(@)(@@) % أورى نداك الذهن زندا على % % أن امرأ في فضله ما قدح % % 4(@)(@@) % و كأس الفاظ عذاب اذا % % مازجها كافور ثلج نضح % % 5(@)(@@) % وصغت ثلجا فاكتسي برده % % ذكاء الفاظك حتى نفح % % 6(@)(@@) % و سبح الناس بدريهما % % حبا فيا لله من ذي السبح % % 7(@)(@@) % و صار بالثلج عذاب الورى % % عذبا وعاه غمه فانشرح % % 8(@)(@@) % لم أنسه كالشيب لما أضا % % في الرأس أو في الجلد لما جرح % % 9(@)(@@) % قد غسل الليل بصابونه % % وفاض في صبغ المسا فانمسح % % 10(@)(@@) % و خاف أن يغتبق الأفق من % % أندائه صدر الدجى فاصطبح % % PageV01P456 11(@)(@@) % و عاد خيط الليل من لونه % % أبيض كالفرق إذا ما وضح % % 12(@)(@@) % وسيرت منه الجبال التي % % رأى بها الساعة طرف طمح % % 13(@)(@@) % ما كان ذاك الوجد حوتا جرى % % في فلك الشهب وثورا نطح % % 14(@)(@@) % الأمر أدهى والذي غاب من % % شكوى الورى أكثر مما سنح % % 15(@)(@@) % سلت يد السعد على النحس من % % أهل الشقا سكينها فانذبح % % 16(@)(@@) % و ضاقت الأنفس من فرط ما % % يندف من رأس وقطن قزح % % 17(@)(@@) % و أبيض ذاك الطرف مما بكى % % وأزبد العواء مما نبح % % 18(@)(@@) % و انقصف الغصن فكم طائر % % ناح عليه بعد ما قد صدح % % 19(@)(@@) % كأنما البحر طفا ملحه % % فذره الأفق على ما جرح % % 20(@)(@@) % يا مدمل الجرح بألفاظه % % وناهيا للدهر عما اجترح % % PageV01P457 21(@)(@@) % لله ما خائية خلدت % % في صفحة الدهر أجل الملح % % 22(@)(@@) % أقسمت لو وازنت الشمس في الم % % يزان دينار سناها رجح % % PageV01P458 البحر : - 1(@)(@@) % سلبت عقلي بأحداق وأقداح % % يا ساجي الطرف أو يا ساقي 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms91# الراح % % 2(@)(@@) % سكران من قهوة الساقي ومقلته % % فاترك ملامك في السكرين يا صاحي % % 3(@)(@@) % و اطرح بعيشك أثقال الملام فما % % حملت وزري ولا كلفت إصلاحي % % 4(@)(@@) % دعني اذا صح نجمي في هوى قمري % % ببيت مالي أنشئ بيت أفراحي % % 5(@)(@@) % بجوهر الكأس يجلو لي بها عرضا % ظبي يفدى بأشباح وأرواح % % 6(@)(@@) % و فارسي من الأتراك تكملتي % % في نحو خديه قد صحت بإيضاح % % 7(@)(@@) % يردي الفوارس منه ملتقى رشاء % % باللحظ والقد سياف ورماح % % 8(@)(@@) % قلبي أبو طالب منه الوصال فما % % ينفك من نار شجو وسط ضحضاح % % 9(@)(@@) % يا مثري الخد بالمحمر من ذهب % دارك ضرورة محتاج ومجتاج % % 10(@)(@@) % يا فاضحي في اهوى خط بعارضه % % لقد نسخت على عشقي بفضاح % % PageV01P459 11(@)(@@) % ما أنس لا أنس لقيانا وقد غفلت % % عين الهوى عن قرير العين طماح % % 12(@)(@@) % قابلت شعرك بعد الوجه ملتفتا % فأنعم الله امسائي واصباحي % % 13(@)(@@) % حيث الرضى في جبين الصب مكتئب % % أيام لم يمح اسطار الصبي ماح % % 14(@)(@@) % و حامل الكأس تحت الدجن يعملها % % كأنه مدلج يمشي بمصباح % % 15(@)(@@) % و الغيم دان لكأس الراح يمزجها % % يكاد يمسكه من قام بالراح % % 16(@)(@@) % و الآن كاسي دموعي والتذكر إن % % أعي التذكر تشدو شدو مفصاح % % 17(@)(@@) % يا عنبر الخال في ريحان سالفه % % هل باب عيشي مسرور بمفتاح % % 18(@)(@@) % و هل إلى أرض مصر زورة لشج % بسائل من دموع الشوق ملحاح % % 19(@)(@@) % و هل أباكر بحر النيل منشرحا % فأشرب الحلو من أكواب ملاح % % 20(@)(@@) % و أشتكي النأي في باب العلاء إلى % % نعم الملي بأنجائي وإنجاحي % % PageV01P460 21(@)(@@) % ذاك الذي قال شعري أي ممتدح % % تدعو وقالت علاه أي مداح % % 22(@)(@@) % أما زمان علي مع شذا كلمي % % فقد تجانس نفاع بنفاح % % 23(@)(@@) % أغر طامي بحور الفضل ناسبها % % بغائص في بحور الشعر سباح % % 24(@)(@@) % من آل يحيى كتاب الفضل متصل % % فيهم بكف قوي العزم طماح % % 25(@)(@@) % أنأى البرية عن آمال ملتمح % % تلك المعالي وأدناهم لممتاح % % 26(@)(@@) % قام الكفاة له طوعا ولو قعدوا % % قامت عليهم نواحيهم بأنواح % % 27(@)(@@) % ذو الرأي والقلم الهادي فواصف ذا % % و ذاك ما بين منصور وسفاح % % 28(@)(@@) % مدبر الملك في سر وفي علن % % و محكم الأمر من خاف ومن ضاحي % % 29(@)(@@) % و متبع البر للعافي بتهنئة 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms92# % و سائق الهلك للعادي باسجاح % % 30(@)(@@) % فيالها من يد بالجود فائضة % وزند رأي لداجي الرأي قداح % % PageV01P461 31(@)(@@) % لا عيب فيه سوى علياء مخجلة % % بمعرب البر نطق اللاحن اللاحي % % 32(@)(@@) % و سحر لفظ بأدنى ما ينمقه % % عقاد ألسنة نفاث أرواح % % 33(@)(@@) % و بذل جاه و مال مع توفره % % أربى وزاد فقلنا بذل مزاح % % 34(@)(@@) % نجل الخلائف نبه عندها عمرا % و افخر بكل عمير البيت جحجاح % % 35(@)(@@) % المترعين جفانا كل داجية % % و المفزعين جفونا عند إصباح % % 36(@)(@@) % و الفاتحين بأقلام لهم وطنا % ممالكا لم يحلها عزم فتاح % % 37(@)(@@) % فان حموا بيضة الاسلام إنهم % من سادة في صميم العرب أمحاح % % 38(@)(@@) % أو كلموا بمواضيهم وألسنهم % % فانهم أهل إبلاغ وإفصاح % % 39(@)(@@) % أحييتهم يا ابن يحيى فابق مستبقا % للفضل ذا غرر فيه وأوضاح % % 40(@)(@@) % فرعا تلافي العلى أصلا لقد سجعت % % سواجع الحمد فيكم بين أدواح % % PageV01P462 41(@)(@@) % يا من له القلم المنهل بارقه % % بوابل في الوغى والسلم سحاح % % 42(@)(@@) % يا ذا البلاغة اسلاكا على حلل % % فالفضل ما بين وشاء ووشاح % % 43(@)(@@) % لا غروان نشأت منشا الرياض وفي % % يمناك كل نمير الودق دلاح % % 44(@)(@@) % إني لأشهد منها غير ماشهدت % % أفكار كل حسير الفكر لماح % % 45(@)(@@) % فليت شعري توفي حقها مدحا % و ليت شعري متى بالقرب أرباحي % % 46(@)(@@) % طال اطراحي وإبعادي فهل سبب % % لممسك بشباك اللغو طراح % % 47(@)(@@) % يا سيدا سر حسادي عليه فقد % % تمكنوا من قصي الغوث ملتاح % % 48(@)(@@) % قد كنت أروي لهم عن جابر زمنا % عنكم وها أنا أرويها لجراح % % 49(@)(@@) % و ليتني عارفا ذنبي فأجعله % % باب التقاضي لسهل العفو مرتاح % % 50(@)(@@) % إن كنت أعرف ذنبا أستحق به % % فراق عطفك لا فارقت أتراحي % % PageV01P463 51(@)(@@) % فالعفو منك لقد سد الصدود على % % ذهني مذاهب ينحو مثلها الناحي % % 52(@)(@@) % أرويت أرض نبات لو عنيت به % % كنت المحيا بزهر منه نفاح % % 53(@)(@@) % من غير سمعك يدري ما أرجعه % % في الخصب من مستطاب الحمد صداح % % 54(@)(@@) % بباهر البر جد ديا علي قوي % % شعر تجد خير عمار لأمداح % % 55(@)(@@) % و ليهنك العام ساعي العام منشرحا % بمجمل اليمن لم يحتج لشراح % % 56(@)(@@) % عام حلفنا بمسطور الثلاث به % % بأنه عام إقبال وأفراح % % 57(@)(@@) % للملتجي لك فيه سعد أخبية % من الأذى ولباغي البعد 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms93# ذباح % % PageV01P464 البحر : - 1(@)(@@) % لا وأجفانك المراض الصحاح % % لست أدري ماذا تقول اللواحي % % 2(@)(@@) % لي شغل يا صاح بالنظر المنص % % ور عنهم بالمدمع السفاح % % 3(@)(@@) % مادرى من يلوم حمرة دمعي % % أن قلبي عليك دامي الجراح % % 4(@)(@@) % يا مليحا صدغاه قبلة حسن % % سجدت نحوها وجوه الملاح % % 5(@)(@@) % لك شعر وقامة إن يكونا % % راية فهي راية الأفراح % % 6(@)(@@) % و جبين اذا ذكرت سناه % % بت أبكى صبابة للصباح % % 7(@)(@@) % خلق في للهوى مثلما رك % % ب في ابن الأثير خلق السماح % % 8(@)(@@) % الرئيس الذي به نفق الشع % % ر وراجت بضائع المداح % % 9(@)(@@) % و الجواد الذي يحدث راجي % % سيب كفيه عن عطا بن رباح % % 10(@)(@@) % باذل المال بالبنان الذي قد % % حفظ الملك من جميع النواحي % % PageV01P465 11(@)(@@) % همة تعتلى على شرف الشه % % ب ورفد يدنو إلى الممتاح % % 12(@)(@@) % كم قصدنا له مشاهد فضل % % فحصلنا على النجا والنجاح % % 13(@)(@@) % و هرعنا إلى أنامل يمنا % % ه ففزنا بالخمسة الأشباح % % 14(@)(@@) % ليس ينفك بين عرض مصون % يترقى وبين مال مباح % % 15(@)(@@) % فلكفيه والثراء حروب % % نحن منها في غاية الإصلاح % % 16(@)(@@) % قال للباسم البروق نداها % % طرق الجد غير طرق المزاح % % 17(@)(@@) % جرت الشهب بالعلى لعلي % و لباغي مداه بالإفتضاح % % 18(@)(@@) % و أقامت يد الزمان عليا % % لقضايا قرعن سن الرماح % % 19(@)(@@) % فجلاها في الروع رايات رأي % % و نضاها صحائفا كالصفاح % % 20(@)(@@) % كل محبوكة الصدور تهادي % % بين أدراعها أكف الكفاح % % PageV01P466 21(@)(@@) % فهي سور على الممالك تحمي % % و لباب الأرزاق كالمفتاح % % 22(@)(@@) % يا ملاذ العفاة دعوة عبد % مستغيث من الزمان مجاح % % 23(@)(@@) % ذي حسان من القصائد تجلى % % و هي محتاجة لحظ القباح % % 24(@)(@@) % يتشكى الصدى لنغبة جاه % أصبح الناس فيه كالسباح % % 25(@)(@@) % فأعني على الحوادث وانظر % % لثوابي لديك لا لا متداحي % % 26(@)(@@) % جل من صاغ نور بشرك في الخل % % ق وسبحان فالق الإصباح % % PageV01P467 البحر : - 1(@)(@@) % إنسان عيني ساهر بك سافح % % يا أيها الانسان إنك كادح % % 2(@)(@@) % و جوانح ملئت عليك تحسرا % % هذا وهن إلى لقاك جوانح % % 3(@)(@@) % يا معرضا قلبي عليه ومدمعي % % هذا مقيم هوى وهذا نازح % % 4(@)(@@) % يا يوسف الحسن البديع جماله % % و الله ما عيشي بهجرك صالح % % 5(@)(@@) % ان كان وجهك بدر سعد إنه % % من لحظك الفتاك سعد الذابح % % 6(@)(@@) % ماضر مثلك لائم إلا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms94# كما % % قد ضر أقمار الدجنة نابح % % 7(@)(@@) % و لقد يجدد فيك جرح حشاشتي % % طير على البان المرنح صادح % % 8(@)(@@) % يا فرط ضعفي حيث صرت فريسة % % و حمام بانات الحمى لي جارح % % 9(@)(@@) % عجبا لشخصك نافرا جرح الحشا % % فهو الغزال لدي وهو الجارح % % 10(@)(@@) % و تغزل الأشعار فيك كواسد % % و لهن في مدح الجمال منادح % % PageV01P468 11(@)(@@) % و في ابن محمود المحامد حقها % % فغدت إلى علياه وهي طوامح % % 12(@)(@@) % وزكت أحاديث الورى عن مجده % % فجميع ما يحكون عنه مدائح % % 13(@)(@@) % الكاتم الصدقات وهي شهيرة % كالمسك يكتم وهو شيء فائح % % 14(@)(@@) % و القائل الكلمات يقدر قدرها % % سور الكلام كأنهن فواتح % % 15(@)(@@) % من كل ساجعة السطور كأنما % % همزاتها ورق هناك صوادح % % 16(@)(@@) % و فريدة قد أقرحت عن مثلها % % فطن الورى فلذاك قيل قرائح % % 17(@)(@@) % واري الزناد فضائلا وفواضلا % % هذا وما فيه لعمرك قادح % % 18(@)(@@) % يجدي ويسبح في الثناء فيحتوي % % أمد العلى فهو الجواد السابح % % 19(@)(@@) % و يزين رفعة بيته بجلاله % % فكأنما هي في السماء مصابح % % 20(@)(@@) % في كفه قلم كأن رشاءه % % للرزق والدرر النفيسة مائح % % PageV01P469 21(@)(@@) % خافت مهابته الرماح فأذعنت % % حتى تخوفه السماك الرامح % % 22(@)(@@) % يا مانحي غرر اللهى متبسما % و العام مغبر الأسرة كالح % % 23(@)(@@) % جردتني سيفا بمدحك قائما % حتى تضم علي ثراي صفائح % % 24(@)(@@) % فلأ شكرنك في القريض بسبق % % مع أنها عما بلغت طلائح % % 25(@)(@@) % و من المكارم أن تسامح عجزها % % إن الكريم ابن الكريم مسامح % % PageV01P470 البحر : - 1(@)(@@) % تاوب كالبدر في جنحه % % و أين العواصم من سفحه % % 2(@)(@@) % خيال يزور أخير الدجى % % فتحسبه مبتدا صبحه % % 3(@)(@@) % و قد ضم جفني يزير الكرى % % فيعرب في الحال عن فتحه % % 4(@)(@@) % هوى شارح لي حديث الغرام % % فلا تسأل القلب عن شرحه % % 5(@)(@@) % تعشقه شاهر الوجنتين % % بما لقى القلب من جرحه % % 6(@)(@@) % له سيف لحظ أراق الدماء % فحمرة خديه من نضجه % % 7(@)(@@) % كأن عذاريه خط الجمال % % تميل النفوس إلى لمحه % % 8(@)(@@) % رئيس له في العلى منزل % تزل الكواكب عن صرحه % % 9(@)(@@) % يرجى وإن زاد في سخطه % % و يخشى وإن لان في مزحه % % 10(@)(@@) % ترقى بن محمود مرقى الهلال % % فلاحظه الضد في نبحه % % PageV01P471 11(@)(@@) % و أعدى على نائبات الزمان % % فما تشتكي الناس من فدحه % % 12(@)(@@) % براحته قلم قد 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms95# دعا % % شكاة الزمان إلى صلحه % % 13(@)(@@) % يقول الرجاء لممتاحه % % طغى سيل غيثك فاستصحه % % 14(@)(@@) % و يوضح للناس نهج الثناء % فنظم القصائد من منحه % % 15(@)(@@) % له كتب في ديار العدى % % غني بها الجيش عن كدحه % % 16(@)(@@) % تثقف مثل أعالي الشآم % % بما اشتعل الدهر من لفحه % % 17(@)(@@) % لك الله من واضح مجده % % كما اتضح الأفق عن صبحه % % 18(@)(@@) % و برك في الفضل بر رفيع % % فليس المعاند من طرحه % % 19(@)(@@) % و كم لك عندي من منة % كما أسرف الغيث في سحه % % 20(@)(@@) % ينطقي جودك المرتجى % % و يدعو اللسان إلى صدحه % % PageV01P472 21(@)(@@) % فأجلب نظمي ونثري له % % و أورى الصحيحين عن مدحه % % PageV01P473 البحر : - 1(@)(@@) % نجوم تراعيها جفون سوافح % % و لا طيفكم دان ولا الليل نازح % % 2(@)(@@) % أباخلة عني بطيف خيالها % % عسى ولعل الدهر فيك يسامح % % 3(@)(@@) % و تاركة قلبي كليما وناظري % % ذبيحا ولا في العيش بعدك صالح % % 4(@)(@@) % لمحتك للبين المصادف لمحة % % فطاحت بأحشائي اليك الطوائح % % 5(@)(@@) % و ما أنت إلا الظبي جيدا ومقلة % فلا غرو أن أهوت اليك الجوارح % % 6(@)(@@) % جوارح ينمو شجوها وسقامها % % علي ودوني جندل وصفائح % % 7(@)(@@) % و قلب عصى نصحي عليك وسلوتي % % فأبعد شيء صبره والنصائح % % 8(@)(@@) % و قلت جبين المالكية عذره % % فقال الورى عذر لعمرك واضح % % 9(@)(@@) % و ضاقت علينا عينها فتمنعت % % و هيهات أن تسخو النفوس الشحائح % % 10(@)(@@) % و لم أنس يوم البين إيماء طرفها % % و عيس المطايا للفلاة جوانح % % PageV01P474 11(@)(@@) % فليت الردى أجرى دم العيس ناحرا % % فسالت بأعناق المطى الأباطح % % 12(@)(@@) % و مما شجاني في الضحى صوت ساجع % % كأني له بعد الحبيب أطارح % % 13(@)(@@) % يساعدني نوحا يكاد يجيبنا % % بأمثاله بان الحمى المتناوح % % 14(@)(@@) % فليت حمام الأيك يوما أعارني % % جناحا إلى الركب الذي هو نازح % % 15(@)(@@) % و ليت النجوم الزهر تدنو قوافيا % لنا فتنقى في ابن خضر المدائح % % 16(@)(@@) % رئيس تجلى بشره ونواله % % فلا الأفق مغبر ولا العام كالح % % 17(@)(@@) % على المزن من تلك البنان تشابه % % و في البدر من ذاك الجبين ملامح % % 18(@)(@@) % و في الأرض من أخلاقه وثنائه % % سمات فنغم المزهرات الفوائح % % 19(@)(@@) % ولله أقلام الحماسة والندى % % على يده حيث السطا والمنائح % % 20(@)(@@) % حمين الحمى لما فتحن بلاده % % و قد أقصرت عنها القنا والصفائح % % PageV01P475 21(@)(@@) % فهن على 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms96# اللآئي فتحن مغالق % و هن على اللآتي غلقن مفاتح % % 22(@)(@@) % و طوقنا أطواق جود فكلنا % % على شبه الأغصان بالحمد صادح % % 23(@)(@@) % و روضن أقطار الشآم بأحرف % % سقى أصلها طاف من النيل طافح % % 24(@)(@@) % و صدر لما يلقى من السر لائق % % و كوكب فضل في سما الملك لائح % % 25(@)(@@) % علي المدى لا بالملة جازع % و لا بالتي يثني لها العطف فارح % % 26(@)(@@) % وزاكي النهى إما لمعنى سيادة % % و إما لأكباد المعادين شارح % % 27(@)(@@) % بليغ اذا نص المقال وبالغ % % مدى الرأي حيث النيرات الطوامح % % 28(@)(@@) % و أبيض وجه العرض والوجه والتقى % % اذا لفحت سفع الوجوه اللوافح % % 29(@)(@@) % على دولة الأملاك كل فصوله % % ربيع وفي الأعدا سعود ذوابح % % 30(@)(@@) % و للطالبي العمى غمام كأنه % % لما جد في جود وحاشاه مازح % % PageV01P476 31(@)(@@) % إلى عدله يشكو الزمان فانه % % خديم يغادي أمره ويراوح % % 32(@)(@@) % تعودت أن تسري اليه ركائبي % % فترجع وهي المثقلات الروازح % % 33(@)(@@) % و آخذ من قبل المديح جوائزا % تقصر عن أدنى مداها الممادح % % 34(@)(@@) % فلا غرو أن آتي بهن مضيئة % % كأن المعاني في البيوت مصابح % % 35(@)(@@) % أمولاي ان يسكت لساني صابرا % فان لسان الحال مني صادح % % 36(@)(@@) % ألم تر أني معمل الفكر في كرى % % حمار أماسي غبنه وأصابح % % 37(@)(@@) % ركوبي على أمثاله في زمانكم % % كما ركبت في العالمين القبائح % % 38(@)(@@) % فهل لي ببيت المال حق فيقتضى % % و هل أملي في أرذل الخيل جامح % % 39(@)(@@) % ولي في بديع الوصف كالصخر قوة % % و لكنه سيل على الأرض سائح % % 40(@)(@@) % أقدم فيه الوصف فيل أوانه % % على ثقة مني بأنك مانح % % PageV01P477 البحر : - 1(@)(@@) % سقى عهدها داني العهاد سفوحها % % خياما برغمي نأيها ونزوحها % % 2(@)(@@) % و بلغها عني أتم تحية % عليل الصبا يروي بفيه صحيحها % % 3(@)(@@) % معدلة في مرسلات مدامعي % % و لكن قلبي المستهام جريحها % % 4(@)(@@) % أسكان قلب لا يداوي كليمه % % ليهنكم من مقلتي ذبيحها % % 5(@)(@@) % و يهن الليالي أن فيها لواصف % % جمالا به يخفى ويعفى قبيحها % % 6(@)(@@) % فدى لابن ريان الكرام لأنه % % فتى حيها راعي حماها صريحها % % 7(@)(@@) % سليمان ملاك المعالي وإنه % % بآية طوفان المكارم نوحها % % 8(@)(@@) % أخو الدين للساري به يستنيره % % نعم وأخو الدنيا لمن يستميحها % % 9(@)(@@) % أمولاي قد أنشرت ميت فكرتي % % بأبيات نظم حل فيها 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms97# مسيحها % % 10(@)(@@) % فيا لك نظما من نسيب سيادة % حقيق له من كل نفس مديحها % % PageV01P478 11(@)(@@) % تذكرني النعمى وأنت غمامها % % بروضة ألفاظ وأنت صدوحها % % 12(@)(@@) % بقيت مدى الدنيا لمجد تصونه % % و اعلاق مال للعفاة تبيحها % % 13(@)(@@) % فما الدهر الا ناظر أنت لحظه % % و ما الفضل الا صورة أنت روحها % % PageV01P479 البحر : - 1(@)(@@) % هل بعد وجهك للرجاء نجاح % % أو بعد شخصك في الحياة صلاح % % 2(@)(@@) % يا راحلا تجب القلوب لفقده % % الصبر يمنع والبكاء يباح % % 3(@)(@@) % لا غروان تذري الدموع أجاجها % % و نداك عذب في الاكف قراح % % 4(@)(@@) % لهفي عليك لراحة مزنية % تعيي الغيوث وغيثها سحاح % % 5(@)(@@) % لهفي عليك لهمة علوية % % تغضي النجوم وطرفها طماح % % 6(@)(@@) % لهفي عليك لئن خلعت شبيبة % % كان الزمان لحسنها يرتاح % % 7(@)(@@) % لهفي عليك لئن أثرت مراثيا % كنا نؤمل أنها أمداح % % 8(@)(@@) % ما كان سلخ العام الا طالعا % لقلوبنا فيه عليك جراح % % 9(@)(@@) % آها لفقدك إنه الفقد الذي % % نسخت بيوم عزائه الأفراح % % 10(@)(@@) % ما كان يا ابن الفتح يومك بالذي % % فيه لباب تصبر مفتاح % % PageV01P480 11(@)(@@) % تبكي عليك يراعة وبراعة % و فصاحة ورجاحة وسماح % % 12(@)(@@) % تبكي عليك من العلوم صحائف % و من الجيوش أسنة وصفائح % % 13(@)(@@) % تمسي اذا ذكرت يراعك بينها % % و دموعها بدل السلاح سلاح % % 14(@)(@@) % تبكيك للنعماء آل مقاصد % كانت بسجلك في الندى تمتاح % % 15(@)(@@) % تبكيك للود الصحيح صحابة % لبكائها نسب عليك صراح % % 16(@)(@@) % هذاك عوام بمدمعه وذا % % حد الهموم لقلبه جراح % % 17(@)(@@) % تبكي عليك منازل بالرغم أن % % هبط التراب هلالها الوضاح % % 18(@)(@@) % كان الحمام بها يغرد فرحة % فاليوم تغريد الحمام نواح % % 19(@)(@@) % هل تعلم الورقاء أني مثلها % % لو كان لي بعد الفقيد جناح % % 20(@)(@@) % واحسرتاه لجوهري فضائل % % ما بعد رؤياه القلوب صحاح % % PageV01P481 21(@)(@@) % واحسرتاه ليوسفي محاسن % % عاداه صرف زمانه المجتاح % % 22(@)(@@) % أيام كمل فضله وتباشرت % % قصاده فغدوا اليه وراحوا % % 23(@)(@@) % و ثناه عن عذل العواذل في الندى % % رأي يرى أن السماح رباح % % 24(@)(@@) % و غدا ودولة عيشة أموية % حتى انتضى سيف الردى السفاح % % 25(@)(@@) % هن الليالي الضاربات على الورى % % بنجومها فكأنهن قداح % % 26(@)(@@) % يسطو على الآجال رمح سماكها % % و لتسطون على السماك رماح % % 27(@)(@@) % ما أعدل الدنيا وان جارت بنا % % لم يبق مجزاع ولا مفراح % % 28(@)(@@) % أعظم بها من حكمة 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms98# محجوبة % ما للتعمق نحوها إيضاح % % 29(@)(@@) % اما الجسوم فللتراب غيابها % % و إلى مقدر خلقها الأرواح % % 30(@)(@@) % جادت صلاح الدين تربك مزنة % % فيها لأحوال الثرى إصلاح % % PageV01P482 31(@)(@@) % تبكي على خد التراب غيومها % % فتظل باسمة ربى وبطاح % % 32(@)(@@) % حتى كأن ربيعها ونسيمها % % نعمى يديك وذكرك الفياح % % PageV01P483 البحر : - 1(@)(@@) % بروحي طرس جاءني متضمنا % بدائع يسري الفكر فيها ويسرح % % 2(@)(@@) % به من غريب اللفظ والحظ مجتلى % % فيالك طرسا للغريبين يشرح % % 3(@)(@@) % و لغز هداني نحو معناه أنه % % أتى وبه عرف من الروض ينفح % % 4(@)(@@) % يشف على مكتوبه طيب ما حوى % % و كل إناء بالذي فيه ينضح % % 5(@)(@@) % و لو كنت تبغي كتم مخبره لما % % بعثت بنمام يقول ويفصح % % 6(@)(@@) % هو الاسم لكن نصفه فعل كله % % اذا جعلت أسرار معناه تلمح % % 7(@)(@@) % و مقلوبة أحجية مثل لم يجد % % فدونك نظما عاجزا ليس يصلح % % 8(@)(@@) % أجاب فان قال الصواب أو الخطأ % % فمثلك هدي أو فمثلك يفصح % % PageV01P484 البحر : - 1(@)(@@) % مرحبا بالنظم يأتي % % نفحة من بعد نفحة % % 2(@)(@@) % من بياض باكرتها % % سحرا بالسفح سفحه % % 3(@)(@@) % و لآل نظمتها % % بركات ضمن سبحه % % 4(@)(@@) % و عروس جعلت لي % % من بياض الوصل صبحه % % 5(@)(@@) % مع أني عاجز عن % % ضمة دع ذكر فتحه % % 6(@)(@@) % كنت في الشعر جوادا % يحرز السبق بلمحه % % 7(@)(@@) % فثناني العسر والاو % % لاد لا أملك فسحه % % 8(@)(@@) % كل إبن لي وبنت % % كشكال لي وشبحه % % 9(@)(@@) % و زناد القول لا يس % % مح في وجهي بقدحه % % 10(@)(@@) % و دعائي بك عن قا % % فية يغني وصدحه % % PageV01P485 11(@)(@@) % خذ صفاء الود كاسا % % ت وفيها ألف صحه % % 12(@)(@@) % و احتملني ان تحالي % % ت وأغربت بملحه % % 13(@)(@@) % سيدي ما في النوى وال % % قرب للمشتاق فرحه % % 14(@)(@@) % إن تغب عني وان تق % % دم فلي بالهجر قرحه % % 15(@)(@@) % أيها الفتح المفدى % % خف من العاتب فتحه % % PageV01P486 البحر : - 1(@)(@@) % عجبت من طرفي وخد المليح % % كلاهما هذا بهذا جريح % % 2(@)(@@) % هذا دم الراح به واقف % و ذا دم الأدمع فيه يسيح % % 3(@)(@@) % تغزلي المنظوم فيه وفي % % سلطاننا الناصر نظم المديح % % 4(@)(@@) % في دعة الله وفي حفظه % % مسراك والعود بعزم نجيح % % 5(@)(@@) % يا موعدا منه بقرب اللقا % % قابلتنا اليوم بصبح صبيح % % 6(@)(@@) % لو جاز أن تسلك أجفاننا % % اذا فرشنا كل جفن قريح % % 7(@)(@@) % لكنها بالبعد 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms99# معتلة % و أنت لا تسلك غير الصحيح % % PageV01P487 البحر : - 1(@)(@@) % يا إماما في مدح علياه صدق % قد محا كذب غير مدحك ماح % % 2(@)(@@) % ان أرجوزتي بدار حديث ال % % شام تملي عوالي الأمداح % % 3(@)(@@) % و كتاب الصحاح أوتي فما ين % % فك يروى عنكم كتاب الصحاح % % 4(@)(@@) % لم يضع غير نشرها إنما غا % % بت وعادت للباب ذا مفتاح % % 5(@)(@@) % كلما أذبل الزمان نباتي % % جاءني منكمو بسحب سحاح % % PageV01P488 البحر : - 1(@)(@@) % بأيمن طالع عقد سني % جلي اليمن متصل النجاح % % 2(@)(@@) % ظفرت عن قران السعد فيه % % بشمس الحسن من شمس السماح % % 3(@)(@@) % فنعم الاهل قد أضحت وماذا % % يقول المدح في أهل الصلاح % % PageV01P489 البحر : - 1(@)(@@) % أحاشيك يا نجل الوزارة من أذى % % تمكن من أسرارنا والجوانح % % 2(@)(@@) % دفنت النوى والتمر فيمن تحبه % % و دفن النوى يا مي إحدى الفضائح % % PageV01P490 البحر : - 1(@)(@@) % يا سيدي وابن ساداتي الذين على % % أبوابهم صح عندي باب أفراحي % % 2(@)(@@) % قد كنت في الباب مع ياقوت متحدا % فعوضوا عبد أبواب بمفتاح % PageV01P491 البحر : - 1(@)(@@) % طلبت سكنى مكان أو كراه عسى % % يسكن الحال قلبا ظل مجتاحا % 2(@)(@@) % فقال اسكن امام قد درى طلبي % % و كيف يسكن من لم يلق مفتاحا % PageV01P492 البحر : - 1(@)(@@) % أرى الحسن مجموعا بجامع جلق % و في صدره معنى الملاحة مشروح % % 2(@)(@@) % فإن يتغالى في الجوامع معشر % فقل لهم باب الزيادة مفتوح % % PageV01P493 البحر : - 1(@)(@@) % بصالح حمص نستعين على الثنا % % لديك ونرجوه لنظم المدائح % % 2(@)(@@) % و والله ما نوفي أياديك حقها % % إذا نحن أثنينا عليك بصالح % % PageV01P494 البحر : - 1(@)(@@) % مضى منجح ثم اقتضى الحال بعده % % سواه قريب المثل للقصد ينتحي % % 2(@)(@@) % له عاذر من نفسه باجتهاده % % و مبلغ نفس عذرها مثل منجح % % PageV01P495 البحر : - 1(@)(@@) % سيقا لأيامي التي سلفت % % ما بين ذاك النعيم والمرح % % 2(@)(@@) % لا بنزل الدهر عن يدي قدما % كأنني صورة على قدح % % 3(@)(@@) % و راهبة طرقناها بليل % % و دون مزارها أرج يفوح % % 4(@)(@@) % فهبت في الظلام إلى مدام % كأن شعاعها قبس يلوح % % 5(@)(@@) % و حيتنا بعافية شمول % % كما يترقرق الدمع السفوح % % 6(@)(@@) % كأنا قد سلبنا الديك عينا % فقام من الكرى فزعا يصيح % % PageV01P496 البحر : - 1(@)(@@) % و ظيفتي المدح الذي أنا ناظم % % عليك وحسبي في الانام به مدحا % % 2(@)(@@) % اذا عدلت أقلام خطي لضبطه % % ملأت 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms100# قلوب الحاسدين بها جرحا % % 3(@)(@@) % ألا فابق طول الدهر للملك حافظا % اذا حملت يداك من قلم رمحا % % PageV01P497 البحر : - 1(@)(@@) % شغل القرائح بالدعاء الصالح % % إشغال وقتك عن قريض المادح % % 2(@)(@@) % شغلا وتدبيرا بمملكة رأت % % منك الجميل فأعرضت عن طامح % % 3(@)(@@) % لا طعن في قلم شرعت بدولة % ان كان يطعن في السماك الرامح % % 4(@)(@@) % يا صاحب الدعوات والبركات أي % % مدائح تولي وأي قرائح % % 5(@)(@@) % يا موثرا كتم الهبات وكتمها % % كالمسك لا يزداد غير نوافح % % 6(@)(@@) % الله يعلم ما تكن من الدعا % % و الحمد عجز أو مخافة كاشح % % 7(@)(@@) % أقسمت يا موسى الزمان لقدوفا % % بالصدق من أثنى عليك بصالح % % PageV01P498 البحر : - 1(@)(@@) % كن كيف شئت فلا براح % % أنت المنى والإقتراح % % 2(@)(@@) % أنت الذي لا بأس في % % تلفى عليك ولا جناح % % 3(@)(@@) % لك وجنة خسران قل % % بي في محبتها رباح % % 4(@)(@@) % من صد عن نيرانها % % فأنا ابن قيس لا براح % % PageV01P499 البحر : - 1(@)(@@) % سرت لك آمالي وان عاقني الضنى % % على ثقة أن يستنير نجاحها % % 2(@)(@@) % ألم تر أني من قديم ووالدي % % وجدي أناس في رباكم رباحها % % 3(@)(@@) % فان أجدبت كفي فأنت غياثها % % و ان فسدت حالي فأنت صلاحها % % PageV01P500 البحر : - 1(@)(@@) % أترضى يا وزير الشام أني % % بدهرك أشتكي حالا قبيحه % % 2(@)(@@) % و أن الناس تذبح في الضحايا % % و ما لي غير أجفان ذبيحة % % 3(@)(@@) % و يمضي العيد في أكل وشرب % و ما لي في الشريحة منه ريحه % % PageV01P501 البحر : - 1(@)(@@) % حيي الحيا قبرا بررت نزيله % % بمنائح مبرورة ومناح % % 2(@)(@@) % و عزا كبت به العدى لما رأوا % % من رفع منزلة وفيض سماح % % 3(@)(@@) % من كان يكبت بالعزاء عداته % % و الحاسدين فكيف بالافراح % % PageV01P502 البحر : - 1(@)(@@) % لعمري لقد حفت بأمن وصحة % ليالي وصال للهناء مبيح % % 2(@)(@@) % أحاشيك عن تعريض سقم وأرتجي % % عوائد عيش للهناء منيح % % 3(@)(@@) % فلا سقم الا يجفن مليحة % و لا عارض الا بخد مليح % % PageV01P503 البحر : - 1(@)(@@) % يا سيد العلماء راق شعاره % و كلامه كأبيه لما يمدح % % 2(@)(@@) % ما أحسن العذبات لائقة بكم % % اما شعارا أو لسانا يفتح % % PageV01P504 البحر : - 1(@)(@@) % يا من غدت ألفاظه حلوة % قد أبدعت معنى وايضاحا % % 2(@)(@@) % تفتح آمالي فأحسن بها % % سكرة تصحب مفتاحا % % PageV01P505 البحر : - 1(@)(@@) % لحا الله ألا فا بما يصنعونه % % من الماء صرفا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms101# فعل من لا يناصح % % 2(@)(@@) % أغني له والمال ضاع بشربه % % أماوي إن المال غاد ورآئح % % PageV01P506 البحر : - 1(@)(@@) % أستودع الله أحبابي الذين نأوا % % و خلفوني في نيران تبريح % % 2(@)(@@) % أستنشق الريح من تلقاء أرضهم % لقد قنعت من الأحباب بالريح % % PageV01P507 البحر : - 1(@)(@@) % عشت للآداب تحمي سرحها % % ببيان خط أو خطو فسيح % % 2(@)(@@) % ليت شعري أنت يا باعثها % % بعد ما ماتت خليل أو مسيح % % PageV01P508 البحر : - 1(@)(@@) % قلت اذ حدثني الفت % % ح ووفاني بمنح % % 2(@)(@@) % كيف أثمار حديثي % % قال فضي وفتحي % % PageV01P509 البحر : - 1(@)(@@) % أقاضي قضاة الدين فضلك مسفر % و شانيك مكبوت وراجيك فارح % % 2(@)(@@) % و قد طاب ديوان المصالح نفخة % فضاعت وما ضاعت عليه المصالح % % PageV01P510 البحر : - 1(@)(@@) % بشرنا الفتح بعاداتنا % % لديك وهي المن والمنح % % 2(@)(@@) % فقلت تبت يد خذلاننا % % و جاء نصر الله والفتح % % PageV01P511 البحر : - 1(@)(@@) % دعوتك يا مولاي للحال عالما % بانك ماحي عسرة الحال بالمنح % % 2(@)(@@) % اذا أغلقت أبواب رزقي عشيرة % فأنت أبو تسهيلها وأبو االفتح % % PageV01P512 البحر : - 1(@)(@@) % بأبي نائم على الطرق راحت % % في هواه وليس يعلم روحي % % 2(@)(@@) % فاتح في الكرى فما سكريا % ياله من مسكر مفتوح % PageV01P513 البحر : - 1(@)(@@) % ضعيتكم قد أشبهت ليلتي % % مخوفة مسودة كالحه % % 2(@)(@@) % كلاهما في وصفه واحد % ما أشبه الليلة بالبارحه % % PageV01P514 البحر : - 1(@)(@@) % نسيت ولست أنسى حسن بكر % % و حسن عشية معها وصحبه % % 2(@)(@@) % ضممت الخصر ثم نحوت أمرا % فيالك ضمة كانت وفتحه % % PageV01P515 البحر : - 1(@)(@@) % ليت شعري ذا كم يكابد حالي % % في حمى الشام ذلة وإجاجه % % 2(@)(@@) % ليتني رحت في المنية عنه % % إن في قول راح للمرء راحة % % PageV01P516 البحر : - 1(@)(@@) % ملك الزمان وجيشه في أحمر % يبدو وللاسلام نصر واضح % % 2(@)(@@) % فكأن بحرا قد جرى بدم العدى % % والقوم فيه والجياد سوابح % % PageV01P517 البحر : - 1(@)(@@) % صبرا وان جل الأسى وانتضى % % لكل قلب حده الجارح % % 2(@)(@@) % كل إلى هذا الثرى صائر % لا صالح يبقى ولا طالح % % PageV01P518 البحر : - 1(@)(@@) % مالي نديم سوى ورقاء ساجعة % % من بعد مغتبقي فيكم ومصطبحي % % 2(@)(@@) % اذا أدار ادكار الوصل لي قدحا % من أحمر الدمع غناني على قدحي % % PageV01P519 البحر : - 1(@)(@@) % وحديقة واصلت خلوتها % % ما بين مغتبق ومصطبح % % 2(@)(@@) % فاذا أخذت بظلها قدحا % غنت حمائمها على قدحي % % PageV01P520 البحر : - 1(@)(@@) % بشرني الدهر بقصد به % % بدا على أصحابي النجح % % 2(@)(@@) % وقال إن تستفتحوا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms102# في رجا % % خير فقد جاءكم الفتح % % PageV01P521 البحر : - 1(@)(@@) % قم هاتها في الليل راحا كما % % توقدت شعلة مصباح % % 2(@)(@@) % ودافع الهم فاني امرؤ % أدفع صدر الهم بالراح % % PageV01P522 البحر : - 1(@)(@@) % مولاي قاضي القضاة ما فعلت % % عوارف منك كنت أمتاح % % 2(@)(@@) % أغلق بابي في وجه مطلبي % % وصد مع من يصد مفتاح % % PageV01P523 البحر : - 1(@)(@@) % ياصاحبا لي بل يا سيدا يده % يد الخلائف في بري واصلاحي % % 2(@)(@@) % ان كان جاهك مهدي المصير إلى % % قصدي فان ندى كفيك اصلاحي % % PageV01P524 البحر : - 1(@)(@@) % لمولودكم يا آل يحيى مزية % من الفضل لا تخفى على كل لامح % % 2(@)(@@) % اذا ماشرعتم في علاه عقيقة % % شرعنا له في درة من مدائح % % PageV01P525 البحر : - 1(@)(@@) % ترك الأسى انسان عيني بعدكم % % أ بدا يغادي لوعة ويراوح % % 2(@)(@@) % تعبان ذا سهر وسح مدامع % يا أيها الانسان انك كادح % % PageV01P526 البحر : - 1(@)(@@) % أقول لمعشر جلدوا ولاطوا % % وباتوا عاكفين على الملاح % % 2(@)(@@) % لأنتم خير من ركب المطايا % % وأندى العالمين بطون راح % % PageV01P527 البحر : - 1(@)(@@) % البرق في كانونه قد نفخ % % والثلج في جيب الغوادي نفخ % % 2(@)(@@) % قد زمجر الرعد بآفاقه % كأنه مما دهاه صرخ % % 3(@)(@@) % هذا وقوس النوء في أفقه % % كأنما قد نصبوا منه فخ % % 4(@)(@@) % قد شد عقدا عاليا أو بنى % % قنطرة في الحال ثم انفسخ % % 5(@)(@@) % و الأرض كالمنفوش أو هذه % % خميرة من فوقه قد لطخ % % 6(@)(@@) % لم تبق أرض قد زكا زرعها % % حتى طواها ثم رد السبخ % % 7(@)(@@) % قد نسخ الليل بأضوائه % لا صححت يا قوم هذي النسخ % % 8(@)(@@) % و امتلأ الوادي بإمداده % % كأنه القربة مما انتفخ % % 9(@)(@@) % و جاءنا النوء بإرعابه % % لا شك أن النوء مما بذخ % % 10(@)(@@) % بحر من القدرة لكنه % % من كل عين للبواكي نضخ % % PageV01P528 11(@)(@@) % و سحبه تفتح أبوابها % % والبرق فيما بيننا كالخوخ % % 12(@)(@@) % و بان في الطود وعرنينه % % بما كساه شمم أو طبخ % % 13(@)(@@) % و كلنا منتثر لحمه % وهو على كانونه قد طبخ % % 14(@)(@@) % دامت ليالي الثلج لا أصبحت % % و لانهار بأذاه التطخ % % 15(@)(@@) % و حكمت فيه أيادي الحيا % % ولا أجاب الله مما اصطرخ % % 16(@)(@@) % و مكنت فيه مدى برقه % % حتى أرى من جلده ما انسلخ % % 17(@)(@@) % هل مطر يغسل في الأرض من % % بياضه أسود هذا الوسخ % % 18(@)(@@) % و هل أرى ريحا وقد 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms103# زعزعت % % في الطرق منه كل طود رسخ % % 19(@)(@@) % و هل فتى يشكي اليه الذي % % تم له أدراج تتلى وبخ % % 20(@)(@@) % بى جمال الدين أنعم به % % مولى كريما ونسيبا وأخ % % PageV01P529 21(@)(@@) % لو قابلت سنوننا شمسه % % أو نوءها أبصرته قد نسخ % % 22(@)(@@) % جاء جواب منه كم حافظ % له وكم رب بديع نسخ % % 23(@)(@@) % فدام ما امتد ردآء الدجى % % مدبرا بالنجم ثم انسلخ % % PageV01P530 البحر : - 1(@)(@@) % لغرة الأفق بياض شدخ % % جسمي به من قبل شهري انسلخ % % 2(@)(@@) % ويلاه من ثلج صميم إذا % % تساكت الناس لديه صمخ % % 3(@)(@@) % قامت به شعرة أجسامنا % % بزرقة فالويل منها خوخ % % 4(@)(@@) % كأنني محراك فرن إذا % قالوا عجين الثلج في الأرض طخ % % 5(@)(@@) % كم يبصق الثلج على لحية % وكم يقول الرعد في الوجه إخ % 6(@)(@@) % كم تعقد الآفاق عقد اللبا % % منه وكم ينثر نثر اللبخ % % 7(@)(@@) % كم بشر بالثلج لما غدا % % كالحجر المطروح قبل المسخ % % 8(@)(@@) % كم أثر نيران اذا مارعى % % بالثلج يجري ماءه قبل سخ % % 9(@)(@@) % و حاول البربخ في الماء أن % % يحكي مجاري رشحه فانبرخ % % 10(@)(@@) % لا كان ذاك البخ منه ولا % % كرر في أيامه قول بخ % % PageV01P531 11(@)(@@) % كم ليلة بالثلج شابت وكم % % مداد جنح بضياه انتسخ % % 12(@)(@@) % صكت به الاجرام من فوقنا % % ودار بالآفاق منا فلخ % % 13(@)(@@) % و جاز في آذاننا واغلا % كأنه يقلع منها زنخ % % 14(@)(@@) % مالي بباب الثلج من طاقة % وخوفه من كبدي قد رسخ % % 15(@)(@@) % فعوذوني دونه بالرقى % % أو بخروني بالحصى والكلخ % % 16(@)(@@) % متى أرى من مطر رحمة % % تطرد من قاعدة ما انفسخ % % 17(@)(@@) % متى أرى جيب الغوادي انفرى % % وروع أفراخي لديه انفرخ % % 18(@)(@@) % اللائذين اليوم من حاتم % كأنه شعوآء فيها فنخ % % 19(@)(@@) % تكوموا في البيت من خوفه % % فالبيت أو ناظمه كوم فخ % % 20(@)(@@) % عادوا بنعمى أحمد فاقتضوا % % منها لدفع الثلج عادات رخ % PageV01P532 21(@)(@@) % ذو القلم الراقي حيا أو علا % فيا له غصنا دنا أو شمخ % % 22(@)(@@) % وأنفق الخاءآت لكنه % % لعبده من وفرها ما رضخ % % 23(@)(@@) % فحيث من مصر ينخى الذي % % عارض من شرقيها ثوب نخ % % 24(@)(@@) % من أين للقوم الأولى قوضوا % % كذهنك المقتدح الممترخ % % 25(@)(@@) % هذا وفي الأقوام ذو قوة % وانما الشيخ عدي شيخ % % PageV01P533 البحر : - 1(@)(@@) % شكرا لها نعمى يد من سيد % أغنى عن 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms104# التطفيل والتشريخ % % 2(@)(@@) % ولقد وثقت بجوده متبصرا % من قبل شم روائح البطيخ % % PageV01P534 البحر : - 1(@)(@@) % أخط سؤالي بالرقاع ولا أرى % % جفاءك يا هذا بوصلك ينسخ % % 2(@)(@@) % ويذبح جفني بالدموع وما له % % سوى الشهر بعد الشهر في البعد يسلخ % % 3(@)(@@) % ترى هل لعامي من جبينك غرة % % بها لا بدمعي المستهل يؤرخ % % 4(@)(@@) % لئن اشبهت منك الغصون معاطفا % لقد أصبحت أيضا تتيه وتشمخ % % PageV01P535 البحر : - 1(@)(@@) % ولا عبة بنفس المرء يمشي % % هواها مثل ما يمشي الرخيخ % % 2(@)(@@) % تصيد طائر القلب المعنى % % بحبة خالها الصدغ الفخيخ % % 3(@)(@@) % كأن سيوف سيف الدين رشت % % حفافي خدها منه لطيخ % % 4(@)(@@) % أمير ما لأهل القصد صفر % لديه ولا لأهل الكبر طيخ % % 5(@)(@@) % قضى عدلا فلا عين بظلم % % بها خزر ولا أنف شميخ % % 6(@)(@@) % حمدت الله حين بدا لعيني % % شريح قضى وفي عمري شريخ % % 7(@)(@@) % فتى في يوم جود أو نزال % ويوم العلم والآراء شيخ % % 8(@)(@@) % فجود بنانه بحر فرات % وجود بنان أقوام فصيخ % % PageV01P536 البحر : - 1(@)(@@) % كأنك بي سكنت بخانقات % ووعظك قد ملا سمع المصيخ % % 2(@)(@@) % كسرت كؤوس شعري بعد دور % وتبت على يدي شيخ الشيوخ % % PageV01P537 البحر : - 1(@)(@@) % أفدي جمالا مذ عرفت جميله % مااحتجت للتطفيل والتشريخ % % 2(@)(@@) % قال الرجا ان كنت عن إحسانه % % أعمى فشم روائح البطيخ % % PageV01P538 البحر : - 1(@)(@@) % طمعت بالعدل والاحسان منك معا % فكنت عندي بالإحسان غير سخي % % 2(@)(@@) % وقلت يكفي فقام العدل ينشدني % % حاشاه يفرق متا بيني وبين أخي % % PageV01P539 البحر : - 1(@)(@@) % سألته عن قومه فانثنى % % يعجب من افراط دمعي السخي % % 2(@)(@@) % وأبصر المسك وبدر الدجى % % فقال ذا خالي وهذا أخي % % PageV01P540 البحر : - 1(@)(@@) % مازلت أقلع شيبة نسخت بها % % سوداء عقد شبابها مفسوخ % % 2(@)(@@) % حتى غدت صفحات وجهي آية % لا ناسخ وفيها ولا منسوخ % % PageV01P541 البحر : - 1(@)(@@) % مولاي محي الدين دعوة مسمع % % نعمى يديك وللجواب مصيخ % % 2(@)(@@) % أصبحت من هجرانكم وبلادتي % % أعمى يشم روائح البطيخ % % PageV01P542 البحر : - 1(@)(@@) % أستغفر الله لا مالي ولا ولدي % % آسي عليه إذا ضم الثرى جسدي % % 2(@)(@@) % عفت الاقامة في الدنيا لو انشرحت % % حالي فكيف وماحظي سوى النكد % % 3(@)(@@) % وقد صدئت ولي تحت التراب جلا % إن التراب لجلاء لكل صدي % % 4(@)(@@) % لا عار في أدبي إن لم ينل رتبا % وإنما العار في دهري وفي بلدي % % 5(@)(@@) % هذا كلامي 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms105# وذا حظي فيا عجبا % مني لثروة لفظ وافتقار يد % % 6(@)(@@) % انسان عيني أعشته مكابدة % وانما خلق الانسان في كبد % % 7(@)(@@) % وما عجبت لدهر ذبت منه أسى % لكن عجبت لضد ذاب من حسد % % 8(@)(@@) % تدور هامته غيظا علي ولا % % والله ما دار في فكري ولا خلدي % % 9(@)(@@) % من لي بمر الردى كيما يجاورني % % ربا كريما ويكفيني جوار ردي % % 10(@)(@@) % حياة كل امرىء سجن بمهجته % فاعجب لطالب طول السجن والكمد % % PageV01P543 11(@)(@@) % أما الهموم فبحر خضت زاخره % أما ترى فوق رأسي فائض الزبد % % 12(@)(@@) % وعشت بين بني الأيام منفردا % ورب منفعة في عيش منفرد % % 13(@)(@@) % لأتركن فريدا في التراب غدا % ولو تكثر ما بين الورى عددي % % 14(@)(@@) % ما نافعي سعة في العيش أو حرج % إن لم تسعني رحمى الواحد الصمد % 15(@)(@@) % يا جامع المال إن العمر منصرم % فابخل بمالك مهما شئت أو فجد % 16(@)(@@) % ويا عزيزا بخيط العجب ناظره % أذكر هوانك تحت الترب واتئد % % 17(@)(@@) % قالوا ترقى فلان اليوم منزلة % فقلت ينزله عنها لقاء غد % 18(@)(@@) % كم واثق بالليالي مد راحته % إلى المرام فناداه الحمام قد % 19(@)(@@) % وباسط يده حكما ومقدرة % ووارد الموت أدنى من فم ليد % % 20(@)(@@) % كم غير الدهر من دار وساكنها % % لا عن عميد ثنى بطشا ولا عمد % % PageV01P544 21(@)(@@) % زال الذي كان للعليا به سند % وزالت الدار بالعلياء فالسند % % 22(@)(@@) % تبارك الله كم تلقى مصائدها % % هذي النجوم على الدانين والبعد % % 23(@)(@@) % تجري النجوم بتقريب الحمام لنا % % وهن من قربه منها على أمد % 24(@)(@@) % لا بد أن يغمس المقدار مديته % % في لبة الجدي منها أو حشى الأسد % % 25(@)(@@) % عجبت من آمل طول البقاء وقد % % أخنى عليه الذي أخنى على لبد % % 26(@)(@@) % يجر خيط الدجى والفجر أنفسنا % % للترب ما لا يجر الحبل من مسد % % 27(@)(@@) % هذي عجائب تثني النفس حائرة % وتقعد العقل من عي على ضمد % 28(@)(@@) % مالي أسر بيوم نلت لذته % % وقد ذوى معه جزء من الجسد % % 29(@)(@@) % أصبحت لا أحتوي عيش الخمول ولا % إلى المراتب أرمي طرف مجتهد % % 30(@)(@@) % جسمي إلى جدثي مهواي من كثب % % فكيف يعجبني مهواي من صعد % % PageV01P545 31(@)(@@) % لا تخدعن بشهد العيش ترشفه % % فأي سم ثوى في ذلك الشهد % % 32(@)(@@) % و لا تراع أخا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms106# دنيا يسر بها % % ولا تمار أخا غي ولا لدد % % 33(@)(@@) % وان وجدت غشوم القوم في بلد % حلا فقل أنت في حل من البلد % % 34(@)(@@) % لأنصحنك نصحا إن مشيت به % % فياله من سبيل للعلى جدد % % 35(@)(@@) % إغضاب نفسك فيما أنت فاعله % % رضى مليكك فاغضبها ولا تزد % PageV01P546 البحر : - 1(@)(@@) % لام العذار أطالت فيك تسهيدي % % كأنها لغرامي لام توكيد % % 2(@)(@@) % وخلف وعدك خلق منك أعرفه % % فليت كان التجافي منك موعودي % % 3(@)(@@) % يا من أفند في وجدي عليه وما % % أبقى الاسى في ما يصغى لتفنيد % % 4(@)(@@) % عاب العدى منك أصداغا مجعدة % % عيب المقصر عن نيل العناقيد % % 5(@)(@@) % وعقد بند على خصر رجعت به % % ذا ناظر بنجوم الليل معقود % % 6(@)(@@) % كأنه تحت وجدان القبا عدم % واحيرتي بين معدوم وموجود % % 7(@)(@@) % رد الجفاء سؤالي فيك أجمعه % فما لسائل دمعي غير مردود % % 8(@)(@@) % لقد خضعت إلى وجدي كما خضعت % % إلى المؤيد أعناق الصناديد % % 9(@)(@@) % داعي المقاصد في علم وفي كرم % % إلى لقاء ملي الفضل مقصود % % 10(@)(@@) % تسري سفين الأماني نحو منزله % % فتستوي من أياديه على الجودي % % PageV01P547 11(@)(@@) % ذاك الذي أسعدت أعمارنا يده % % فما نفكر في حكم المواليد % % 12(@)(@@) % ملك اذا تليت أوصاف سودده % ألقى السراة اليها بالمقاليد % % 13(@)(@@) % ذو العلم قلد طلاب الهدى مننا % حتى وصفناه عن علم وتقليد % % 14(@)(@@) % و الجود راش ذوي الجدوى وطوقهم % % فما يزالون في سجع وتغريد % % 15(@)(@@) % و الجيش قد ألفت باليسر رايته % % تألف الطرف في مغراه بالسيد % % 16(@)(@@) % يبدو وقد سخر الله العباد له % % فالطير والوحش في الآفاق والبيد % % 17(@)(@@) % حتى يقول مواليه وحاسده % % هذا ابن أيوب أم هذا ابن داود % % 18(@)(@@) % لا تنكر المدحة الحسنى وقد قرنت % % بشاهد من معاليه ومشهود % % 19(@)(@@) % أغنى العفاة فلولا ناهيات تقى % أستنغفر الله سموه بمعبود % % 20(@)(@@) % و واصل الحرب حتى كل معركة % % كأنها بيت معنى ذات ترديد % % PageV01P548 21(@)(@@) % يهوى الرماح قدودا ذات منعطف % % والمرهفات خدودا ذات توريد % % 22(@)(@@) % اذا انتشى من دم الأوداج صارمه % % رمى العدى بشديد السطو عربيد % % 23(@)(@@) % و إن أفاض حديثا أو نوال يد % وردت من حالتيه غير مورود % % 24(@)(@@) % جواهرا لا يحد الوصف غايتها % % فاعجب لجوهر شيء غير محدود % % 25(@)(@@) % و أنعما دأبها اسداء بكر يد % لكنهن أياد 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms107# ذات توليد % % 26(@)(@@) % لو أن للبحر جدواه لفاض على % % وجه الثرى بنفيس الدر منضود % % 27(@)(@@) % ولو أمر على صلد الصفا يده % لأنبت العشب منها كل جلمود % % 28(@)(@@) % يا حبذا الملك الساري على شيم % % تروى وتنقل عن آبائه الصيد % % 29(@)(@@) % أدنيت من نار فكري عود مبعثه % % عند الثناء ففاحت نفحة العود % % 30(@)(@@) % نعم العماد لراج مد رغبته % % فمد نحو لقاها طرف معمود % % PageV01P549 31(@)(@@) % يممت في حال مرحوم منازله % % ثم انثنيت وحالي حال محسود % % 32(@)(@@) % و رحت أنقل عن أيوب أنعمه % % نحو الصلات فمن عطف وتوكيد % % 33(@)(@@) % ان شئت تنظر في زهر الربى مطرا % فانظر نوال يديه في أناشيدي % % 34(@)(@@) % و ان أردت عيانا أو محادثة % % فاهرع إلى سندي واسمع أسانيدي % % 35(@)(@@) % يا من تحليت من ألفاظه وندى % % كفيه حلية فضل ذات تجديد % % 36(@)(@@) % ان كان لفظك مثل القرط في أذني % % فإن جدواك مثل العقد في جيدي % % PageV01P550 البحر : - 1(@)(@@) % عذيري من ساجي اللواحظ أغيد % % يصول بأسياف الجفون ولا يد % % 2(@)(@@) % غزال يناجيني بلفظ معرب % % ولكنه يسطو بلحظ مهند % % 3(@)(@@) % وقد روت عن لينه واعتداله % % صحاح العوالي مسندا بعد مسند % % 4(@)(@@) % إذا قعدت أردافه قام عطفه % % فيا طول شجوي من مقيم ومقعد % % 5(@)(@@) % كلفت به من قبل ما طال قده % % فطو له فرط العناق المردد % % 6(@)(@@) % وعاينت من فيه العقيقي خاتما % فصغت له باللثم فص زبرجد % % 7(@)(@@) % وحدثني من ثغره ورضا به % % عن الجوهري المنتقى والمبرد % % 8(@)(@@) % وكنت حذرت الخود حين تمردت % % فأوقعني طرفي لأمرد أمرد % % 9(@)(@@) % يخيل لي أني له لست عاشقا % لأن ليس لي في حبه من مفند % % 10(@)(@@) % ولولا الهوى ما بت بالدمع غارقا % عليه وأشكو للورى غلة الصدي % % PageV01P551 11(@)(@@) % وألثم عطفيه وجفنيه بعد ما % % قتلت برمح منهما ومهند % % 12(@)(@@) % وأبصر فيما تحت صدغيه من سنا % خيالي خلوقا تحت محراب مسجد % % 13(@)(@@) % ورب مدام من يديه شربتها % % معتعة تدعو لعيش مجدد % % 14(@)(@@) % إذا جئته تعشو إلى ضوء كاسه % % تجد خير نار عندها خير موقد % % 15(@)(@@) % تحدثك الأنفاس فيها عن اللما % % ويأتيك بالأخبار من لم تزود % % 16(@)(@@) % فشم بارقا قد خولتك ولا تشم % % لخولة اطلال ببرقة ثهمد % % 17(@)(@@) % من اللآء خفت في يمين مديرها % % فلو أهرقتها الكأس لم تتبدد 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms108# % % 18(@)(@@) % مصعدة من حيث تم كيانها % % تطاف علينا في إناء مجسد % % 19(@)(@@) % فأحسن بها من كف ساق كأنه % % إذا حفها محتاب ثوب مورد % % 20(@)(@@) % إذا قهقه الإبريق في فمه انثنى % % فقل في قضيب ماس تحت مغرد % % PageV01P552 21(@)(@@) % كأن سنا راووقها وصبيبها % % حبال شعاع الشمس تفتل باليد % 22(@)(@@) % كأن بقايا ما نضامن كؤسها % % أساور تبر في معاصم خرد % % 23(@)(@@) % كأن مليك الفرس صور نفسه % على جامها عمدا فمن يدن يسجد % 24(@)(@@) % سقى الغيث عني ذلك العيش إنه % % تولى هنيءالورد غير مصرد % % 25(@)(@@) % و فرق إلا مقلتي وسهادها % % وجمع إلا مهجتي وتجلدي % % 26(@)(@@) % و بدر سرى في طية البين متهما % فيا صاحبي دمعا لعلك منجدي % % 27(@)(@@) % و قال التسلي بعدنا لجفونه % % سهرت زمانا يا نواعس فارقدي % % 28(@)(@@) % حبيب قسمت الشعر ما بين حسنه % وأوصاف ملك شامخ القدر أصيد % 29(@)(@@) % فلا غزل إلا له من قصيدة % ولا مدح إلا للمليك المؤيد % 30(@)(@@) % مليك رأى أن لا مباري في الورى % % فظل يباري سؤدد اليوم بالغد % PageV01P553 31(@)(@@) % أخو عزمات في العلى جد جدها % % فلا دد منها لا ولا هي من دد % 32(@)(@@) % سما وعلا حتى كأن ذيوله % غمائم قد لينت على فرق فرقد % % 33(@)(@@) % يطوف رجآء المعتفين مقامه % % بأبلج هطال اليدين ممجد % 34(@)(@@) % لو اختصمت أهل المكارم في الندى % % لقال مقال الحق ملكي وفي يدي % % 35(@)(@@) % و لو قصدته الوحش والطير لم ترع % % بمفترس يوما ولا متصيد % % 36(@)(@@) % كذلك فليحفظ تراث جدوده % مليك بني فوق الأساس الموطد % % 37(@)(@@) % توافقت الأهواء في ذات فضله % % فمن حاكم عن علمه ومقلد % % 38(@)(@@) % متى شئت يا راعي الكرام وجدته % % غمام الندى في دسته قمر الندي % % 39(@)(@@) % يؤم حماه طالب بعد طالب % فذو الحال يستجدي وذو العلم يقتدي % % 40(@)(@@) % مباحث علم بلدت كل مفصح % % على أنها قد فصحت كل أبلد % % PageV01P554 41(@)(@@) % و لفظ كان السحر فيه محلل % ألم تره في الذوق غير معقد % % 42(@)(@@) % كأن النجوم الزهر في كبد الدجى % % شرار لظى من ذهنه المتوقد % % 43(@)(@@) % و لا عيب فيه غير إسراف جوده % % وأن مدى علياه غير محدد % % 44(@)(@@) % تجول ثغور اللثم حول بنانه % % كما جال عقد في ترائب أجيد % % 45(@)(@@) % هي النفس ماأفنت ثراء مفرقا % فعوضها إلا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms109# بمجد منضد % % 46(@)(@@) % و ما المال بين الناس إلا أزاهر % بروض متى لم تجن تهو وتفقد % % 47(@)(@@) % رعى الله أيام المؤيد إنها % % أحق وأولى بالثناء المؤيد % % 48(@)(@@) % حمت وهمت فالناس ما بين هاجد % أمانا وداع في الدجى متهجد % % 49(@)(@@) % و ما عرفت يومي ندى وشجاعة % % بأخلاق موعود ولا متوعد % % 50(@)(@@) % ورب وغى موهي السوابغ حرها % % ويترك أعطاف الحسام كمبرد % % PageV01P555 51(@)(@@) % تيممها الملك المؤيد وادعا % تيمم منصور اللواء مطود % % 52(@)(@@) % جلت بمساويك الرماح جيوشه % % خلوف العدى من كل ثغر ممهد % % 53(@)(@@) % وصلت بأوطان الشهادة بيضهم % % تماما كأن البيض زوار مشهد % % 54(@)(@@) % تقوم بأيديهم وتركع في الطلا % % وتسجد في بطن الجواد المزرد % % 55(@)(@@) % دع المبتغي نحو الاركام شافعا % وجئه فقيرا بالرجاء المجرد % % 56(@)(@@) % هنالك تلقى نعمة إثر نعمة % لداعي الندى مثل النداء المؤكد % % 57(@)(@@) % و مبيض آثار الصنائع أحمدت % % مناقبه أيام كل مسود % % 58(@)(@@) % اذا شام رأيا في الملمات كفها % % بأفتك من صرف الزمان واكيد % % 59(@)(@@) % و ان طلب الاعداء راع جيادهم % % فذو السبق في تمحيله كالمقيد % % 60(@)(@@) % و خلفهم تبكي على الجسد الطلا % % بكاء لبيد يوم فرقة أربد % PageV01P556 61(@)(@@) % و قصر عن هيجائه شعر مادح % فأصغى إلى مدح الوشيج المقصد % % 62(@)(@@) % و حدثنا يوم الفخار جبينه % % أخاديث صدق عن طهارة محتد % % 63(@)(@@) % و لولا تكاليف العلى وشجونها % % لما كان فيها مرصد فوق مرصد % % 64(@)(@@) % ليهنك ود الناصر الملك انه % دليل على وصل الهنا المتودد % % 65(@)(@@) % أخذت به من كل ريب براءة % فيالك من أنفال رأي مسدد % % 66(@)(@@) % و قطعت أسباب الحوادث بعدما % % علقت بحبل من حبال محمد % % 67(@)(@@) % و هزك غصنا في مهمات ملكه % % فصان بمسلول وزان بمعمد % % 68(@)(@@) % و مازلت للألقاب في الفضل صالحا % تشرفها ما بين مثنى وموحد % % 69(@)(@@) % كأني بأوطان العراق وقد عنت % لشام وأقصى شرقها وكأن قد % % 70(@)(@@) % و لست اذا عد المقال بكاهن % ولكن من تزجر بيمنك يرشد % % PageV01P557 71(@)(@@) % اليك سلكت الخلق سمحا وباخلا % وجبت المرامي فدفدا بعد فدفد % % 72(@)(@@) % فوفيتني وعد الاماني وانها % % سجية اسماعيل في صدق موعد % % 73(@)(@@) % و جاد بك الدهر البخيل وطالما % % تدفق عذب الماء من قلب جامد % % 74(@)(@@) % فيا ليت قومي يعلمون بأنني % % تعجلت من نعماك أضعاف مقصدي % % 75(@)(@@) % و جملت 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms110# فيك الشعر حتى نظمته % فما البيت الا مثل قصر مشيد % 76(@)(@@) % وأخملت أرباب القريض كأنني % % أدرت على أسماعهم كأس مرقد % 77(@)(@@) % فلا زلت مخدوم المقام مخلدا % ومن يكتسب هذا الثناء يخلد % % 78(@)(@@) % شكرتك حتى لم تدع لي لفظة % وكدت بأن أشكوك في كل مشهد % % 79(@)(@@) % لأنك قد أوهنت جهدي باللهى % % وأنسيتني أهلي وأكثرت حسدي % % PageV01P558 البحر : - 1(@)(@@) % تحلو الثغور بذكرك المتردد % % حتى أهم بلثم ثغر مفندي % % 2(@)(@@) % وأراك تتهمني بصبر لم يكن % % يا متهمي هلا وصالك منجدي % % 3(@)(@@) % آها لمقلتك الكحيلة إنها % % نهبت سويدا كل قلب مكمد % % 4(@)(@@) % تلك التي للسكر فيها حانة % % قالت لحسنك في الخلائق عربد % % 5(@)(@@) % دعجاء ساحرة لأن لحاظها % % تفري جوانحنا بسيف مغمد % % 6(@)(@@) % حظي من الدنيا هواي بجفنها % % يا شقوتي منها بحظ أسود % % 7(@)(@@) % عجبا لوجهك وهو أبهى كوكب % % كم ذا يحار عليه قلب المهتدي % % 8(@)(@@) % من لي بيوم من وصالك ممكن % % ولو أنه يوم الحمام بلا غد % % 9(@)(@@) % ولخدك القاضي بمنع زكاته % % عني وقد أثرت يداه بعسجد % % 10(@)(@@) % رفقا بناظري الجريح فقد جرى % % ما قد كفى من غيرة وتسهد % % PageV01P559 11(@)(@@) % وحشاشة لم يبق فيها للأسى % % والهم الا نبذة وكأن قد % % 12(@)(@@) % هذي يدي في الحب انك قاتلي % % طوع الغرام وان حسنك لا يدي % % 13(@)(@@) % لو كان غير الحب كان مؤيدا % بمقام منصور اللقاء مؤيد % % 14(@)(@@) % ملك تصدى للوفود بمنزل % % يروى بلثم ترابه قلب الصدى % % 15(@)(@@) % متنوع الآلاء أغنى بالندى % % وسطا فكيف المعتفي والمعتدي % % 16(@)(@@) % وسرت لهاه لكل قاطن منزل % % سري الخيال إلى جفون الهجد % % 17(@)(@@) % لو كان للأمواه جود بنانه % % لطوت ركاب السفر عرض الفرفد % % 18(@)(@@) % ولو أن راحته تمر على الصفا % % لارتاح للمعروف قلب الجلمد % % 19(@)(@@) % لا تستقر بكفه أمواله % % فكأنها نوم بمقلة أرمد % % 20(@)(@@) % حبا لاسداء الصنائع والندى % % وهوى بأبكار العلى والسؤدد % % PageV01P560 21(@)(@@) % قضت مكارمه مآرب حبه % % فلو أن قاصده درى لم يحمد % % 22(@)(@@) % وحمى فجاج الأرض منه لهمة % قالت لجفن السيف دونك فارقد % % 23(@)(@@) % كم أنشرت جدواه فينا حاتما % ولكم كفانا بأسه دهرا عدي % % 24(@)(@@) % مالا بن شاد في العلى ند وسل % % عما ادعيت سنا الكواكب يشهد % % 25(@)(@@) % بين المكارم والعلوم فلا ترى % % بحماه إلا سائلا أو مقتدي % % 26(@)(@@) % أقواله للمجتني ونكاله 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms111# % % للمجتري ونواله للمجتدي % % 27(@)(@@) % في كل عام لي إليه وقادة % تغني قصيدي عن سواه ومقصدي % % 28(@)(@@) % نعم المليك متى ينادى في الورى % % لعلى فيالك من منادى مفرد % % 29(@)(@@) % واصلت قولي في ثناه فحبذا % % متوحد يثني على متوحد % % 30(@)(@@) % إن لم يكن هذا الحمى العالي فمن % % لنظام هذا اللؤلؤ المتبدد % PageV01P561 31(@)(@@) % يا أيها الملك المهنى دهره % % صم الف صوم بالهنآء وعيد % % 32(@)(@@) % واملك من العمر المؤيد خلعة % ما تنتهي في العين حتى تبتدي % % PageV01P562 البحر : - 1(@)(@@) % نجم تولد بين الشمس والأسد % هنئت بالوالد الأزكى وبالولد % 2(@)(@@) % ودام ملكك مضروبا سرادقه % % على ضروب التهاني آخر الأبد % % 3(@)(@@) % يا حبذا الملك قد مدت سعادته % % ما شئت من عضد سام إلى عضد % % 4(@)(@@) % وحبذا بيت اسماعيل مرتفعا % على قواعد أمست جمة العدد % 5(@)(@@) % جاء البشير بنجل النجل مقتبلا % فيالها من يد موصولة بيد % % 6(@)(@@) % فرع من الدوحة العلياء مطلع % % مع أنه من ثمار القلب والكبد % % 7(@)(@@) % مدت اليه المعالي كف حاضنة % وضمه الملك ضم الروح بالجسد % % 8(@)(@@) % وماست السمر بالاعجاب وابتسمت % % بيض السيوف وقرت أعين الزرد % % 9(@)(@@) % وغردت بأغانيها القسي على % % أوتارهن غناء الطائر الغرد % % 10(@)(@@) % واستشرف القلم العالي للثم يد % عريقة سوف تعلو فوق كل يد % % PageV01P563 11(@)(@@) % واختالت الخيل من زهو فوقرها % % ما سوف تحمل من عزم ومن جلد % % 12(@)(@@) % كأنني بفتى المنصور ممتطيا % جيادها الغر في فرسانه النجد % % 13(@)(@@) % نحو الغزاة ونحو الصيد يعملها % % إما الطراد وإما لذة الطرد % % 14(@)(@@) % لله كوكب سعد في سماء على % لو حل في الافق لم يظل على أحد % % 15(@)(@@) % له مخايل من مجد تكلمنا % % في مهده بلسان الحلم والرشد % % 16(@)(@@) % تكاد تنضو وشاحيه حمائله % % وتنزع الدرع عنه القمط من حسد % % 17(@)(@@) % عصائب الملك أولى من عصائبه % % فهن من غيرة في زي مرتعد % % 18(@)(@@) % يا آل أيوب بشراكم بوجه فتى % مظفر الحد طلاع على نجد % % 19(@)(@@) % يروي حديث المعالي عن أب فأب % رواية التبر في ألحاظ منتقد % % 20(@)(@@) % هذا المؤيد صان الله دولته % % قل في مناقبه الحسنى ورد وزد % % PageV01P564 21(@)(@@) % ملك له في ظلال العز منزلة % ترنو اليه نجوم الفلك من صعد % % 22(@)(@@) % محكم الأمر للأقلام في يده % % وللسيوف مقام الركع السجد % % 23(@)(@@) % وناشر بنداه كل قافية 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms112# % أخنى عليها الذي أخنى على لبد % % 24(@)(@@) % ذاك الذي في حماه نبع أنعمه % % وقلب حاسده للهم في صعد % % 25(@)(@@) % حدثت عن فضله ثم استندت له % % فلا عدمت أحاديثي ولا سندي % % 26(@)(@@) % وقمت أكسو بنيه من مدائحه % % ما يرفل الملك في أثوابه الجدد % % 27(@)(@@) % الحمد لله أحياني وأمهلني % % حتى بلغت بعمري أكرم الأمد % % 28(@)(@@) % للجد والأب والابن امتدحت فيا % % فوزي بها كلها أبهى من الشهد % % 29(@)(@@) % كأنما الملك المنصور واسطة % % وليس في العقد در غير منفرد % % 30(@)(@@) % ذو الجود والبأس في يومي ندى وردى % % مابين منسجم يوما ومتقد % PageV01P565 31(@)(@@) % والسيف والرمح لا يهوى لغيرهما % % لمى من الثغر أو نوعا من الغيد % % 32(@)(@@) % ونبعة الملك قد طالت وقد رسخت % % فالناس من ظلها في عيشة رغد % % 33(@)(@@) % هنئت يا ابن علي في الفخار بها % % ومن يقسك بمنصور ومعتضد % % 34(@)(@@) % لولا مديحك مااخترت القريض ولا % % والله ما دار في فكري ولا خلدي % % 35(@)(@@) % سددت رأيا حباك العز متضحا % فزادك الله من عز ومن سدد % % PageV01P566 البحر : - 1(@)(@@) % أهواه فتان اللواحظ أغيدا % % ترك الغزال من الحياء مشردا % % 2(@)(@@) % ولأجله الاغصان مالت من صبا % والبدر طول الليل بات مسهدا % % 3(@)(@@) % وأغن أقسم لا عصيت عصابة % تدعو اليه ولا أطعت مفندا % % 4(@)(@@) % نشوان من خمر الصبي ودلاله % فاذا تثنى أو تجني عربدا % % 5(@)(@@) % أنا من رأى نارا على وجناته % % تذكو فآنس من جوانبها هدى % % 6(@)(@@) % أبدا أميل إلى لقاه وإن جفا % % وتحن أحشائي له وإن اعتدى % % 7(@)(@@) % واطول أشجاني بطرف فاتر % ترك الفؤاد بناره متوقدا % % 8(@)(@@) % ومورد الوجنات لولا حسنه % % لم يجر دمعي في هواه موردا % % 9(@)(@@) % شدت مناطقه معاطف قده % % فضممت حرف اللين منه مشددا % % 10(@)(@@) % وبليت منه بدور عشق دائم % مثل الهلال اذا استسر تجددا % % PageV01P567 11(@)(@@) % قد أقسمت أحشاي لا تدع الاسى % % كأنامل المنصور لا تدع الندى % % 12(@)(@@) % أبهى الورى خلقا وأبهر منظرا % وأجل آلاء واكرم مولدا % % 13(@)(@@) % ملك يغار البدر لما يجتلى % % ويذيب قلب الغيث لما يجتدى % % 14(@)(@@) % في وجهه للملك نور سعادة % تعشو له الآمال واجدة هدى % % 15(@)(@@) % فرع يخبر عن مبادي أصله % % يا حبذا خبر لديه ومبتدا % % 16(@)(@@) % طالت يداه إلى مآثر بيته % % فحبت مكارمه بكل يد يدا % % 17(@)(@@) % ذو همة في 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms113# الفضل يحكم يومها % % ويريك أحكم من فواصلها غدا % % 18(@)(@@) % وشجاعة تنضي السيوف صقيلة % والى المعامع ربها يشكو الصدى % % 19(@)(@@) % يزداد معنى بيته حسنا به % % فكأنه بيت القريض مولدا % % 20(@)(@@) % ويشيم ما سنى أبوه من العلا % % لا قاصرا عنه ولا متبلدا % % PageV01P568 21(@)(@@) % ما شاد اسماعيل بيت فخاره % % إلا ليستدعي إليه محمدا % % 22(@)(@@) % سار على منهاجه فإذا رأت % % عيناك منصورا رأيت مؤيدا % % 23(@)(@@) % ياابن الذي ملأ الوجود مواهبا % والأفق ذكرا والصحائف سوددا % % 24(@)(@@) % شرفت شعري ذاكرا وأنرته % % حتى كأن بكل حرف فرقدا % % 25(@)(@@) % فلأهدين فريدة لممدح % % أضحى بنيل نداه شعري مفردا % % 26(@)(@@) % حسب ابن شاد أن يراني للثنا % % عبدا وحسبي أن أراه سيدا % % PageV01P569 البحر : - 1(@)(@@) % صدودك يالمياء عني ولا البعد % إذا لم يكن من واحد منهما بد % 2(@)(@@) % بروحي من لمياء عطف إذا زها % % على الغصن قال الغصن ما أنا والقد % 3(@)(@@) % وعنق قد استحسنت دمعي لأجلها % % وفي العنق الحسناء يستحسن العقد % % 4(@)(@@) % من العرب إلا أن بين جفونها % % أحد شبا مما يجرده الهند % % 5(@)(@@) % على مثلها يعصى العذول وانما % % يطاع على أمثالها الشوق والوجد % % 6(@)(@@) % عزيز على العذال عني صرفها % % وللقلب في دينار وجنتها نقد % % 7(@)(@@) % أعذالنا مهلا فقد بان حمقكم % % وقد زاد حتى ما لحمقكم حد % % 8(@)(@@) % وقلتم قبيح عندنا العشق بالفتى % % ومن أنتم حتى يكون لكم عند % 9(@)(@@) % سمحت بروحي للحسان فما لكم % % وما لي وما هذا التعسف والجهد % % 10(@)(@@) % وثغر يتيم الدر سلم مهجتي % % فأتلفها من قبل ما ثبت الرشد % % PageV01P570 11(@)(@@) % هو البرد الأشهى لغلة هائم % أو الطلع أو نور الأقاحي أو الشهد % % 12(@)(@@) % ومرشفه المن الذي لا يشو به % % سلوي أو الراح الشمول أو النهد % % 13(@)(@@) % عهدت الليالي حلوة بارتشافه % % وهن الليالي لا يدوم لها عهد % % 14(@)(@@) % فلا ابتسم البرق الذي كان بالحمى % % غداة تفرقنا ولا قهقهة الرعد % % 15(@)(@@) % تولت شموس الحي عنه ففي العلى % % سناها وفي أكباد عشاقها الوقد % % 16(@)(@@) % وكم ذابح للصب يوم تحملوا % % بأخبية غنى بها للسرى سعد % % 17(@)(@@) % فيا قلب جهدا في التحرق بعدهم % % وهذا لعمري جهد من لا له جهد % 18(@)(@@) % وياد مع فض وجدا بذكر خدودهم % % فإنك ماء الورد إن ذهب الورد % % 19(@)(@@) % رعى الله دهرا كنت فارس لهوه 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms114# % % أروح إلى وصل الأحبة أو أغدو % % 20(@)(@@) % جوادي من الكاسات في حلبة الهنا % % كميت وإلا من صدور المها نهد % % PageV01P571 21(@)(@@) % وفي عضدي بدر الجمال موسد % وقد قدحت للراح في خده زند % 22(@)(@@) % وعيشي مأمون الطباق الذي أرى % % فلا الشعر مبيض ولا الحال مسود % % 23(@)(@@) % زمان تولى بالشبيبة وانقضى % % وفي في طعم من مجاجته بعد % 24(@)(@@) % يزول وما زالت مذاقته الصبى % % و يبلى وما تبلى روائحه البرد % 25(@)(@@) % له أبدا مني التذكر والأسى % % و للأفضل الملك القصائد والقصد % 26(@)(@@) % بكم آل أيوب غنينا عن الورى % % فلم نجد الأمداح فيهم ولم يجدوا % % 27(@)(@@) % أتينا لمغناكم تجارا وإنما % % بضائعنا الآمال تعرض والحمد % 28(@)(@@) % فنفقتم سوق الثنا بضنائع % % معجلة للوفد من سبقها وفد % % 29(@)(@@) % ورشم جناح الآملين وطوقت % % رقاب بنعماكم فلا غرو أن تشدو % % 30(@)(@@) % سقى تربة الملك المؤيد وابل % وفي على عهد المعالي له عهد % % PageV01P572 31(@)(@@) % لقد صدقتنا في الزمان وعوده % % وشيمة إسماعيل أن يصدق الوعد % % 32(@)(@@) % وولى وقد أوصى بنا الملك الذي % % أبر على جمع العلى شخصه الفرد % % 33(@)(@@) % فما لبني أيوب ند من الورى % % وما في بني أيوب عندي له ند % 34(@)(@@) % مليك له في الملك أصل ومكسب % وحظ فنعم الجد والجد والجد % 35(@)(@@) % حوته العلى قبل الحجور وهزه % حديث الثنا من قبل ما هزه المهد % % 36(@)(@@) % وغذته للعلياء قبل لبانه % لبانا لها من مثله مخض الزبد % 37(@)(@@) % فجاء كما ترضى السيادة والعلى % % وحيدا على أبوابه للورى حشد % 38(@)(@@) % رعى خلقه رب العباد وخلقه % % فحسن ما يخفى لديه وما يبدو % % 39(@)(@@) % ألم ترني يممت كعبة بيته % % لحج ولائي لا سواع ولا ود % 40(@)(@@) % علقت بحبل من حبال محمد % % أمنت به من طارق الدهر أن يعدو % % PageV01P573 41(@)(@@) % ويممت مغناه بركب مدائح % % يسيل بها غور ويطفو بها نجد % % 42(@)(@@) % من اللاء أجدى كثرها فتكاثرت % % لدي بها الأتباع والأصل والولد % 43(@)(@@) % وأعجبني المرعى الخصيب ببابه % % فحالي به الأهنى وعيشي به الرغد % % 44(@)(@@) % أيا ملكا لولا حماه وجوده % لما ملح المرعى ولا عذب الورد % 45(@)(@@) % تجمع في علياك كل مفرق % % من الوصف حتى الضد يظهره الضد % 46(@)(@@) % فقربك والعليا وحلمك والسطا % % وحزمك والجدوى وملكك والزهد % % 47(@)(@@) % وعنك استفاد الناس مدحا بمثله % % على الشب 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms115# يشدو أوعلى الركب اذ يحدو % % 48(@)(@@) % فدونكها مني على البعد غادة % يظل عبيدا وهو من خلفها عبد % 49(@)(@@) % على أنها تحتك منك بناقد % يرجى له نقد ويخشى له نقد % % 50(@)(@@) % عريق العلى ألفاظه كد روعه % غدا والوغى والسلم بحكمه سرد % % PageV01P574 51(@)(@@) % حمى الله من ريب الحوادث ملكه % ولا زال للأقدار من حوله جند % % 52(@)(@@) % هو الكافل الدنيا بأنعمه فما % % يحس لمفقود بأيامه فقد % % 53(@)(@@) % وإني وإن أخرت سعيا لأرتجي % % عوائد من نعماه تسعى بها البرد % % 54(@)(@@) % إذا المرء لم يشدد إلى الغيث رحله % % أتى نحو مغناه حيا الغيث يشتد % % 55(@)(@@) % وماأنا إلا العبد ما في رجائه % % ولا ظنه عيب ولا يمكن الرد % % PageV01P575 البحر : - 1(@)(@@) % مسلسل الدمع أسير الفؤاد % % يهيم بالتذكار في ألف واد % % 2(@)(@@) % مجتهد الاوقات في حبكم % % وهو مع الواشي بكم في جهاد % % 3(@)(@@) % ما عقد الليل لأجفانه % % هدبا ولا حل عقود الوداد % % 4(@)(@@) % ياعاذلي فات حديث الأسى % % فما حديث العذل بالمستفاد % % 5(@)(@@) % دع أدمعي بالجود فياضة % فالسابق السابق منها الجواد % % 6(@)(@@) % رب ليال لو بلغت المنى % % فديتها من ناظري بالسواد % % 7(@)(@@) % مضت بلذاتي واستخلفت % % لياليا ألبسها كالحداد % % 8(@)(@@) % إن يغد رأسي أشهبا بعد ما % % باد الصبى فالعذر كالصبح باد % % 9(@)(@@) % مات الصبى واحترقت مهجتي % % ففوق رأسي قد نثرت الرماد % % 10(@)(@@) % مقسم الاحشاء بين الأسى % % كأنعم الأفضل بين العباد % % PageV01P576 11(@)(@@) % الملك العابد نام الورى % % بعدله وهو كثير السهاد % % 12(@)(@@) % ذو الجود في عسر ويسر ومن % % مثل ذوي التجريب في كل ناد % % 13(@)(@@) % والهيبة العظمى التي أصلحت % % بذكرها السائر أهل الفساد % % 14(@)(@@) % من اتقى الله اتقت بأسه % % كواسر الافق وغلب الوهاد % % 15(@)(@@) % بين كتاب ومصلى اذا % % أمسى سواه بين كأس وشاد % % 16(@)(@@) % قد ساد من قبل الصبى سابقا % قولهم السودد قبل السواد % % 17(@)(@@) % وحاز بيت المال من ارثه % % فشد مبناه وأوفى وزاد % % 18(@)(@@) % أحسن به بيتا نظيم العلى % % بلا زحاف في الثنا أو سناد % % 19(@)(@@) % بين ملوك خلصت بيضهم % % دين الهدى من أهل دين العناد % % 20(@)(@@) % وانشروا الآمال بعد البلى % % ونفقوا الأشعار بعد الكساد % % PageV01P577 21(@)(@@) % يا ملكا أصبح في الدين والد % % نيا سعيد الجد والاجتهاد % % 22(@)(@@) % عش كسليمان على ملكه % % تعرض هذي الصافنات الجياد % % PageV01P578 البحر : - 1(@)(@@) % هلال بأفق الملك تزهى سعوده 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms116# % % وشبل بغاب السمر تربى أسوده % % 2(@)(@@) % وفرع على تهتز أعطاف نجده % % وينفح أبناء المحامد عوده % % 3(@)(@@) % تباشرت الدنيا به وتنافست % % مراتبه في شخصه ومهوده % % 4(@)(@@) % وسر بني أيوب أن مقامهم % % محافظة عاداته وعهوده % % 5(@)(@@) % إذا غاب ملك لم يغب غير شخصه % % وقام ابنه من بعده وحفيده % % 6(@)(@@) % فيا لك بيتا في الفخار سعيده % % بنوه على حالاته وجدوده % % 7(@)(@@) % هنيئا لبيت الفضل أن عماده % % مقيم وأن الملك باق عميده % % 8(@)(@@) % وأن وليد الأفضل الملك قد محا % % عن الناس حزنا لا ينادى وليده % % 9(@)(@@) % سمعنا به في شهر شعبان فانتهت % % لنا والعدى حلواؤه ووقوده % % 10(@)(@@) % يكاد قبيل المهد تعلو سروجه % % وتنشر من قبل القماط بنوده % % PageV01P579 11(@)(@@) % ويهتز للجدوى وما هز مهده % % به وتناغى بالهبات وفوده % % 12(@)(@@) % شبيه أبيه في الفخار وجده % % فيا لقديم قد تلاه جديده % % 13(@)(@@) % سقى الله مثوى جده كل مزنة % تضوع بها ضوع الرياض لحوده % % 14(@)(@@) % وأبقى أباه للسيادة والعلى % % تنال عطاياه وتحمى جنوده % % 15(@)(@@) % وأنشأه في الجود والبأس نشأة % يبيد بها تبر الثرى وحديده % % 16(@)(@@) % أما والأيادي الأفضلية إنها % % تحمل جهد الحمد حتى تؤوده % % 17(@)(@@) % لقد نهضت علياه نهضة ماجد % قصي مداه فائضات مدوده % % 18(@)(@@) % مضيء وما في الأفق برق نشيمه % % مفيء وما في الأرض خصب نروده % % 19(@)(@@) % له عزمات في العلى شادوية % لها أبدا من كل عزم سديده % % 20(@)(@@) % فما همها إلا ضعيف تسوسه % % بفضل نداها أو قوي تسوده % % PageV01P580 21(@)(@@) % مقسمة أقلامه وسيوفه % لنعماء يبديها وطاغ يبيده % % 22(@)(@@) % عزيز على الساعي مداه وهذه % % مهابته عصر الشباب وجوده % % 23(@)(@@) % إذا كان حرب فهو سفاح يومه % % وإن كان رأي غامض فرشيده % % 24(@)(@@) % يرجيه من بحر القريض سريعه % % فيلقاه من بحر النوال مديده % % 25(@)(@@) % يساويه في حق العلى مشتبه % إذا ما تساوى سبطه ويزيده % % 26(@)(@@) % ويسمى سعيدا دهره ومباركا % فصح لنا أن الدهور عبيده % % 27(@)(@@) % تسوق إليه كل سعد يشاؤه % % و تخدمه في كل أمر يريده % % 28(@)(@@) % فلو أننا في يوم قصد جنابه % % سألنا شباب العمر كاد يعيده % % 29(@)(@@) % فلو أن أقمار السماء تحجبت % % لأغنى سراة الليل عنها وجوده % % 30(@)(@@) % ولو أنه لم يحشد الجيش للوغى % % كفته سطاه أن يجر حسوده % % PageV01P581 31(@)(@@) % ألا إن سلطان المعالي محمدا % لمشكور سعي المكرمات 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms117# حميده % % 32(@)(@@) % فليت عماد الدين يبصر نسله % % و قد جل مسعاه وزاد عديده % 33(@)(@@) % وما هو إلا بيت ملك منظم % فمن أجل ذا أيامه تستعيده % % 34(@)(@@) % أأزكى الورى نفسا وأكرم معشرا % و أمكنهم من سؤدد تستجيده % % 35(@)(@@) % بكم غنيت حالي عن الناس وازدهى % % نظام كلامي فيكمو وفريده % % 36(@)(@@) % فما الدر إلا دون نظم أنصه % % و ما القصر إلا دون بيت أشيده % % PageV01P582 البحر : - 1(@)(@@) % اليك مدير الكاس عني إنني % % رأيت دموع الخوف تقطع للصدى % % 2(@)(@@) % وإياك باللمياء يشرق خدها % % فإني لم آنس على ناره هدى % % 3(@)(@@) % نزعت فلا الساقي لدي براكع % وليست أباريق المدامة سجدا % % 4(@)(@@) % وما أنا بالساعي لمحراب طرة % على طلعة كانت لعشقي مشهدا % % 5(@)(@@) % كفى ما استبنت اليوم لي من جرائم % إذا لم أبدلها فيا خجلي غدا % % 6(@)(@@) % إلهي قد مد الرجا يد قاصد % وجودك أولى أن تبلغه يدا % % 7(@)(@@) % وقدمت آباء ونسلا فكيف لي % % بباقية والأصل والفرع قد غدا % % 8(@)(@@) % وفاض ولي من دموعي فعله % % يكون وليا للإنابة مرشدا % % 9(@)(@@) % بوحي إنسانا قبلنا قد تقدموا % % ونادوا بنا لو أننا نسمع الندا % % 10(@)(@@) % وسارت بهم سير المطي نعوشهم % % وبعض أنين القادمين لهم حدا % % PageV01P583 11(@)(@@) % وأمسوا على البيداء بنتظروننا % % إلى سفر يقضي بأن نتزودا % % 12(@)(@@) % فريدون في أجداثهم بفعالهم % % وكم منهم من ساق جندا مجندا % % 13(@)(@@) % تساووا عدى تحت الثرى وأحبة % فلا فرق ما بين الأحبة والعدى % % 14(@)(@@) % سل الدهر هل أعفى من الموت شائبا % غداة أدار الكاس أم رد أمردا % % 15(@)(@@) % وهل أبقت الأيام للعلم والعلى % % وبذل الندى ذاك المليك المؤيدا % % 16(@)(@@) % وهل تركت للسؤدد ابن عليه % % وهل قبلت منا الفدى لآبي الفدا % % 17(@)(@@) % غياث الورى يومي رجا ومخافة % شهاب العلى نجم الهدى كوكب الندى % % 18(@)(@@) % ألا في سبيل الله نصل عزائم % % وعلم غدا في باطن الأرض مغمدا % % 19(@)(@@) % على الرغم منا أن خبا منه رونق % وجاوبنا من حول تربته الصدى % % 20(@)(@@) % غنينا زمانا في ظلال نواله % % فلله ما أغنى زمانا وأرغدا % % PageV01P584 21(@)(@@) % نزور حمى ما لامس الخطب جاره % % ونجني عطا مارد من لامس يدا % % 22(@)(@@) % ونمدح معتاد المديح وإنما % % لكل امريء من دهره ما تعودا % % 23(@)(@@) % إلى أن قضى الدنيا سعيدا مؤملا % وعاد إلى الأخرى 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms118# شهيدا ممجدا % % 24(@)(@@) % وخلف اسماعيل أركان بيته % % مؤسسة يدعو اليها محمدا % % 25(@)(@@) % مليك حوى في الملك أفضل وصفه % % فيا حبذا نعتا ونفسا ومحتدا % % 26(@)(@@) % له همة تواقة شادوية % إذا صعدت تاقت لأشرف مصعدا % % 27(@)(@@) % اذا بلغت في الملك دار نعيمه % % أبى عزمه الا النعيم مخلدا % % 28(@)(@@) % فكم هاجد تحت الثرى ومحمد % أخو الملك أمسى ساهدا متهجدا % % 29(@)(@@) % تزهد حيث العمر والملك مقبل % وقد قل من لاقاهما متزهدا % % 30(@)(@@) % فديناه مهديا لحال رشيدة % وقل لذاك الفضل بالأنفس الفدى % % PageV01P585 31(@)(@@) % رعى لي في الملك المؤيد ذمة % ولم ينس لي فيه قصيدا ومقصدا % % 32(@)(@@) % وأشهدني عهد الشهيد بأنعم % أبى عطفها أن لا يكون مؤكدا % % 33(@)(@@) % أيا ملكا ندعوه للسلم والوغى % % وللدين والدنيا وللجد والجدا % % 34(@)(@@) % أيا سالك التقوى طريقا منيرة % ويا باني المعروف حصنا مشيدا % % 35(@)(@@) % ويا واضعا في كفه السيف لم يضر % % علاه بوضع السيف في موضع الندى % % 36(@)(@@) % على أبرك الأوقات تسري لمقصد % وترجع موفور العلى متزيدا % % 37(@)(@@) % عوائد لطف الله فيك جميلة % فلا تدفع الرجوى ولا تحذر العدى % % 38(@)(@@) % فكم سرت محمود المسير مهنأ % وعدت فكان العود أهنى وأحمدا % % PageV01P586 البحر : - 1(@)(@@) % أناعسة الأجفان أسهرت مكمدا % % عسى تكحلي عينيه بالخصر مرودا % % 2(@)(@@) % فيا حبذا للخصر مرود عسجد % جعلت عليه للذوائب إثمدا % % 3(@)(@@) % لئن فهمت عيناك حالي معربا % لقد سل منها الجفن سيفا مهندا % % 4(@)(@@) % وان كان فيك الحسن أصبح كاملا % لقد أصبح اللاحي عليك مبردا % % 5(@)(@@) % وان كنت مع شيبي خليع صبابة % فيا رب يوم من لقاك تجددا % % 6(@)(@@) % و يارب ليل فيه عانقت كاعبا % تذكر صدري نهدها فتنهدا % % 7(@)(@@) % وقيدني احسانها بذوائب % ومن وجد الاحسان قيدا تقيدا % % 8(@)(@@) % فياليتها عندي أتمت جميلها % % فتكتب في قيدي عليه مخلدا % % 9(@)(@@) % زمان الصبى يا لهف حيران بعده % % يظل على اللذات في مصر مبعدا % % 10(@)(@@) % ولو عاودت ذاك الشقي شبيبة % لعاود ذياك النعيم وأزيدا % % PageV01P587 11(@)(@@) % وأشهى اليه من رجوع شبابه % % رجوعك يا قاضي القضاة مؤيدا % % 12(@)(@@) % بدأت بحكم وقت الخلق حمده % % وعدت فكان العود أوفى وأحمدا % % 13(@)(@@) % وكان سرور اليوم في مصر قد فشا % % فكيف وقد أنشأت أضعافه غدا % % 14(@)(@@) % ولم أنس من دار السعادة صحبة % % مباركة الاثنين تطلع أوحدا % % 15(@)(@@) % مدائح لما كان 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms119# ممدوح مثلها % % تراه البرايا مفردا كنت مفردا % % 16(@)(@@) % أجيد ويجدي عادتينا وانما % % لكل امرء من دهره ما تعودا % % 17(@)(@@) % فدتكم بني السبكي خلق رفعتمو % % فلا أحد إلا اذا لكم الفدا % % 18(@)(@@) % ولا أحد إلا خصصتم برفدكم % % فلا فرق ما بين الأحبة والعدى % % 19(@)(@@) % وما تخرج الاحكام عنكم لغيركم % % فسيان من قد غاب منكم ومن بدا % % 20(@)(@@) % فلو وكفانا الله ولي غيركم % % لما راح في شيء يجيد ولا غدا % % PageV01P588 21(@)(@@) % وما الشام الا معلم قد ملأته % % بعدلك أحكاما وعلمك مقتدى % % 22(@)(@@) % حكمت بعدل لم تدع فيه ظالما % وصلت بعلم لم تدع فيه ملحدا % % 23(@)(@@) % وجدت إلى ان لم تدع فيه مقترا % % وسدت إلى أن لم تذر فيه سيدا % % 24(@)(@@) % واعطيت في شرخ الصبا كل سؤدد % % إلى أن ظننا أن في المشيب أسودا % % 25(@)(@@) % يقول ثناء الخزرجي وقومه % % لعمرك ما سادت بنو قيلة سدا % % 26(@)(@@) % ولا عيب في أثناء عيبة يلتقي % % سوى سؤدد يضني وشاة وحسدا % % 27(@)(@@) % فدونكها علياء فيكم ترددت % % وعزم اختيار فيكم ما ترددا % % 28(@)(@@) % وهنئتها أو هنئت خلعا إذا % % أضاءت فمن أطواقها مطلع الهدى % % 29(@)(@@) % وان أزهرت بيضا وخضرا رياضها % % وفاحت ففي أكمامها سحب الندى % % 30(@)(@@) % اذا ابن علي سارفي الشعر ذكره % % فقل حسنا زكى قصيدا ومقصدا % % PageV01P589 31(@)(@@) % جوادا أتينا طالبا بعد طالب % % فهذا اجتدى منه وهذا به اقتدى % % 32(@)(@@) % مسافرة أمواله لعفاته % كأن الثنا حاد باظعانها حدا % % 33(@)(@@) % له في العلى باب صحيح مجرب % لعاف رجا خيرا وعاد قد اعتدى % % 34(@)(@@) % فلله ما أشقى الحسود بعيشة % لديه وما أهنى الفقير وأسعدا % % 35(@)(@@) % وكم قابلت رجواي حالا حسبته % % فضاعف لي ذاك الحساب وعددا % % 36(@)(@@) % وكم نقدة من تبره ولجينه % % تخذت لديها كالمنجم مرصدا % % 37(@)(@@) % رأيت بنقديه بياضا وحمرة % فقلت لي البشرى اجتماع تولدا % % 38(@)(@@) % وسدت على نجل الحسين بمدح من % % سأثقل أفراسي بنعماه عسجدا % % 39(@)(@@) % أأندى الورى كفاه وجهة ذي حيا % % على أنه أجدى وجاد وجودا % % 40(@)(@@) % أغار على حالي الزمان بعسفه % % ولكن ندى كفيك في الحال أنجدا % % PageV01P590 41(@)(@@) % وما كنت أبغي في المعيشة مرفقا % فكم من يد في الجود اتبعتها يدا % % 42(@)(@@) % حلفت بمن أنشا بنانك والحيا % % لقد جدت حتى المجتدي بك يجتدى % % 43(@)(@@) % ومن قطع 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms120# الاطماع من كل حاسد % لقد زدت حتى ما يكون محسدا % % 44(@)(@@) % ولا خبر في الحلم والعلم والثنا % % تجاه الورى الا وذكرك مبتدا % % 45(@)(@@) % فعش للعلى تاجا يليق بمثله % % فريد الثنا ممن أجاد منضدا % % 46(@)(@@) % ترد الردى عنك المحبون فدية % % تكون لهم في الترب مجدا مؤيدا % % 47(@)(@@) % ولا أرتضي موت العداة فانهم % % ببقياك في عيش أمر من الردى % % PageV01P591 البحر : - 1(@)(@@) % فدى لك مسلوب الرقاد شريده % % يعاوده برح الأسى ويعوده % % 2(@)(@@) % اذا ما ذكا في فحمة الليل بارق % تبين في الأحشاء أين وقوده % % 3(@)(@@) % وان نظمت ريح الصبا عقد حزنه % % تناثر من سلك الجفون فريده % % 4(@)(@@) % وان ألقت الورق السواجع درسها % % أعاد الأسى بين الضلوع معيده % % 5(@)(@@) % بروحي من أعطافه وعذاره % % هي القصد لا بان الحمى وزروده % % 6(@)(@@) % ومن شيبت عشاقه زمن الصبى % % شوائب عشق لا ينادى وليده % % 7(@)(@@) % محا رسم مغناه الغمام وما محا % % لدمعي رسما لا يزال يجوده % % 8(@)(@@) % ورب مدام ثغره وحبابها % % سواء ولفظي والبكا وعقوده % % 9(@)(@@) % شربت على ورد الربى وهو خده % % وإلا على سوسانها وهو جيده % % 10(@)(@@) % ونبهت عيداني بنوح على الدجى % % وما ناح قمري ولا ماس عوده % % PageV01P592 11(@)(@@) % سرورا باقبال الزمان وحبذا % % سرور زمان محكمات سعوده % % 12(@)(@@) % وقد رقمت وشي الربى أبر الحيا % % وجرت على وادي دمشق بروده % % 13(@)(@@) % وعادت وكان العود أحمد دولة % لها النصر إرث زاكيات شهوده % % 14(@)(@@) % يهز ابن فضل الله بيض قواضب % اذا هي هزت في المهارق سوده % % 15(@)(@@) % يوازر رب الملك رب كتابة % كأن طروس الخط منها جنوده % % 16(@)(@@) % ويجري بأمر الملك سود يراعه % % فيا حبذا ساداتنا وعبيده % % 17(@)(@@) % وتبسم ارجاء الثغور مسرة % بأبلج لا تعبان الا حسوده % % 18(@)(@@) % سعيد مساع أو سعيد مناسب % فثقد سعدت في كل حال جدوده % % 19(@)(@@) % و شهم ولكن جنده من سطوره % % وقاض ولكن المعاني شهوده % % 20(@)(@@) % روى فرعه عن دوحة عمرية % قديم فخار لا يشاب جديده % % PageV01P593 21(@)(@@) % فأي فخار أول لا يجده % % وأي فخار آخر لا يجيده % % 22(@)(@@) % وأي مقام في العلى لا يسوسه % % وأي همام في الورى لا يسوده % % 23(@)(@@) % رأيت ابن فضل الله فاضل دهره % % اذا اعتبرت ألفاظه وسعوده % % 24(@)(@@) % اذا ابن علي وابن يحيى تساجلا % % فقل طارف المجد الرضي وتليده 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms121# % % 25(@)(@@) % أعادت علاه بيت فضل منظما % فلله بيت طيب يستعيده % % 26(@)(@@) % و علمنا صوغ الكلام بحمده % % فها نحن نحيي لفظه ونعيده % % 27(@)(@@) % و أنقذنا بالبر من وهج حادث % يذوب به من كل عان جليده % % 28(@)(@@) % نظرت أبا العباس نظرة باسم % لحال امرىء كاد الزمان يبيده % % 29(@)(@@) % و كان على حال الحسين من الظما % % إلى ورد غوث والزمان يزيده % % 30(@)(@@) % فأحييته بعد الردى أو أقمته % % وقد طال من تحت التراب هموده % % PageV01P594 31(@)(@@) % و جليتها يا ابن المجلي ضمينة % % خلود الفتى ان الثناء خلوده % % 32(@)(@@) % فدونك من نظمي عجالة مادح % اليك تناهى قصده وقصيده % % 33(@)(@@) % يقال انظروا الممدح وافق مادحا % فذا فاضل الدنيا وهذا سعيده % % PageV01P595 البحر : - 1(@)(@@) % قمرا نراه أم مليحا أمردا % % ولحاظه بين الجوانح أم ردى % % 2(@)(@@) % من آل بدر طلعة أو نسبة % والرقمتين سوالفا أو مولدا % % 3(@)(@@) % آها لمنطقه البديع معربا % ولسيف ناظره الكحيل مهندا % % 4(@)(@@) % لم يجر دمعي في هواه مسلسلا % % حتى ثوى قلبي لديه مقيدا % % 5(@)(@@) % أدعو السيوف صقيلة من لحظه % % واذا دعوت لماه جاوبني الصدى % % 6(@)(@@) % واذا دعوت بنان أحمد جاوبت % % سحب الندى من قبل ما سمع الندا % % 7(@)(@@) % لشهاب دين الله وصف ضاء في % % أفق فقل نجم السمار جم العدى % % 8(@)(@@) % كم صافحت من راحتيه يد امرئ % % عشرا وصبحه الهناء فعيدا % % 9(@)(@@) % يا خير من علقت يدي بولائه % % أقسمت ما سدت الاكارم عن سدى % % 10(@)(@@) % يا مسدي النعمى التي قد أصبحت % % سندا لمن يشكو الزمان ومسندا % % PageV01P596 11(@)(@@) % أحسن بجاهك شافعي يامالكا % % أروي بجود يديه مسند أحمدا % % 12(@)(@@) % كم راحة أوليتها من راحة % % ويد صنعت بها لمفتقر يدا % % 13(@)(@@) % و الله لا أجريت في عدد الورى % % خبر الثنا الا وأنت المبتدا % % 14(@)(@@) % و لقد تزيد شعر من استعفته % % بنداك حسنا في الزمان مجددا % % 15(@)(@@) % و الشعر مثل الروض يعجب حسنه % % لاسيما ان كان قد وقع الندى % % PageV01P597 البحر : - 1(@)(@@) % يا أهل فضل الله إن لبيتكم % % فضلا يروح له الثناء ويغتدي % % 2(@)(@@) % هذا شهاب سمائكم متوقد % بالذهن فوق الكوكب المتوقد % % 3(@)(@@) % أفعاله ومقاله ونواله % % للمجتلي والمجتني والمجتدي % % 4(@)(@@) % لله كم لك من يد أسديتها % % ما للمدائح في وفاها من يد % % 5(@)(@@) % نطقتني ورفعتني بمكارم % حفظت لدي وأخرست من 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms122# حسد % % 6(@)(@@) % وأقمتني فيها خطيبا بالثنا % % ومننت حتى باللباس الأسود % % 7(@)(@@) % من مبلغ الأهلين عني أنني % % بدمشق عدت لطيب عيشي الأرغد % % 8(@)(@@) % وأمنت من نار الخطوب ولفحها % % لما لجأت إلى الجناب الأحمدي % % PageV01P598 البحر : - 1(@)(@@) % لحظك في الفتك هو البادي % % يا فتنة الحاضر والبادي % % 2(@)(@@) % فلا تلم لحظا جرحنا به % % خدك يا جارح أكباد % % 3(@)(@@) % يا من له لام على وجنة % زادت عليها غلة الصادي % % 4(@)(@@) % سرقت من عيني كحل الكرى % % ونمت عن دمعي وتسهادي % % 5(@)(@@) % إن تسخن الأدمع عيني فقد % % طال لذاك الحر تردادي % % 6(@)(@@) % حمام دمعي في الهوى نافق % بكوكب للخد وقاد % % 7(@)(@@) % وعاذلي الواعظ في صبوتي % % كأنما يأتي بميعاد % % 8(@)(@@) % فدأبه العذل ودأبي البكى % % مسلسلا يروى باسناد % % 9(@)(@@) % يروم للصب هدى وهو في % % واد وقلب الصب في واد % % 10(@)(@@) % أهلا بسفاح دموعي ولا % % أهلا من العاذل بالهادي % % PageV01P599 11(@)(@@) % و حبذا حيث زمان الصبى % % لهوي بذاك الشادن الشادي % % 12(@)(@@) % أجني على خديه أو أجني % % وردا على أهيف مياد % % 13(@)(@@) % وردي لثم الخد لا كأسه % % فلست للكاس بوراد % % 14(@)(@@) % يالك من وصل قصير المدى % % أبكي عليه طول آمادي % % 15(@)(@@) % إن لم أكن قد شبت من بعده % % في عام عشرين ففي الحادي % % 16(@)(@@) % يا زمن اللهو وعصر الصبى % % سقاك صوب الرائح الغادي % % 17(@)(@@) % كما ابتدى صوب علي على % % وفد الرجا والفضل للبادي % % 18(@)(@@) % علاء دين الله عيث الندى % % غوث المنادي قمر النادي % % 19(@)(@@) % ذو الفضل من ذات ومن نسبة % % والمجد لا يحصى بتعداد % % 20(@)(@@) % و القول من مسند سحبانه % % والفعل من مسند حماد % % PageV01P600 21(@)(@@) % و البيت مرفوع لفاروقه % % ما بين انجاب وانجاد % % 22(@)(@@) % رماح أيديهم وأقلامها % % أعماد ملك أي أعماد % % 23(@)(@@) % أما ترى يمنى علي بما % % خطته رجوى كل مرتاد % % 24(@)(@@) % ذات يراع في الجدا والعدا % % داع لتجنيس العلى عاد % % 25(@)(@@) % فرع نحيف وهو وافي الحيا % % لكل وافي القصد وفاد % % 26(@)(@@) % لمشرق من مغرب ظله % % دع غايتي مصر وبغداد % % 27(@)(@@) % سطوره طورا ربى زاهرا % وتارة أغيال آساد % % 28(@)(@@) % و لفظه التبري أو جوده % % جلته أسماعي وأجيادي % % 29(@)(@@) % كم سافرت في الجود أمواله % % يحدو بها من مدحه حاد % % 30(@)(@@) % فالغيث من غيظ بها عابس % والبحر في خبط وازباد % % PageV01P601 31(@)(@@) % كم فضلت آلاؤه فاضلا % واستعبدت ألف ابن 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms123# عباد % % 32(@)(@@) % كم حفظت من فقه آرائه % بحوث اكمال وارشاد % % 33(@)(@@) % كم أحسنت أزهار آدابه % % لمدحه الزاهر امدادي % % 34(@)(@@) % و ربما أدبني معرضا % فكان تثقيفا لمنآد % % 35(@)(@@) % أعرض عني مرة مرة % فأعترضت أنكال أنكادي % % 36(@)(@@) % و بان لي هوني على سادتي % % حتى على أهلي وأولادي % % 37(@)(@@) % و رفقة أخرني بينهم % % إخماد ذهني أي إخماد % % 38(@)(@@) % كنت أبا جيد كتابهم % % فصرت في قسم أبي جاد % % 39(@)(@@) % و خف ذهني فكلامي على الأ % % قلام ميت فوق أعواد % % 40(@)(@@) % حتى إذا عاد إلي الرضى % % عاد بحمد الله سجادي % % PageV01P602 41(@)(@@) % و عدت في النظم إلى سبق % يعرفها النظام من غاد % % 42(@)(@@) % وزاد تأميري فما أرتضي % % أبا فراس بعض اجنادي % % 43(@)(@@) % و أصبح الشامت بي حاسدا % في حال إصداري وإيرادي % % 44(@)(@@) % بالروح أفدي سيدا خائفا % علي في قربي وإبعادي % % 45(@)(@@) % كثر أعدائي بإعراضه % % وفي الرضا كثر حسادي % % 46(@)(@@) % و ليهنه العيد على أن في % % لقياه أعيادا لأعيادي % % 47(@)(@@) % نداه في الخلق ومدحي له % % غذآء أرواح وأجساد % % PageV01P603 البحر : - 1(@)(@@) % عاش وصلا وغيره مات صدا % % مستهام لسلوة ما تصدى % % 2(@)(@@) % بأبي زائر وقد شرع الإص % % باح يطوي من الدجنة بردا % % 3(@)(@@) % ونسيم الصبا على الأفق يذكي % % سحرا من مجامر الزهر ندا % % 4(@)(@@) % يارعى الله سفح نعمان سفحا % وقى الله عهد نعمان عهدا % % 5(@)(@@) % ومهاة تعد نعمان دارا % واللوى والعقيق صدغا وخدا % % 6(@)(@@) % مشتهاة اللقا كما تشتهى الدن % % يا وان أتعب النفوس واكدى % % 7(@)(@@) % يتثنى الأراك زهرا فيبني % % ان في ثغرها مداما وشهدا % % 8(@)(@@) % ومن الجوهر الصغير يتيما % لم يدع للهوى لرائيه رشدا % % 9(@)(@@) % ما علمنا من قبله في تصاني % % ف الهوى ان لابن بسام عقدا % % 10(@)(@@) % كيراع الوزير جودا وبأسا % حين تذكو في الحالتين وتندى % % PageV01P604 11(@)(@@) % الوزير الذي نهى الخطب عنا % % فتعدى عنا ولم يتعدى % % 12(@)(@@) % يتقي جانب التقي وتخشى الإن % % س والجن من سليمان حدا % % 13(@)(@@) % أوفر العالمين عزا وعزما % وهو أوفى العباد نسكا وزهدا % % 14(@)(@@) % طالع يجتلي به الملك بدرا % ووقور يحبه الملك أحدا % % 15(@)(@@) % و مهيب لو يلمح الدم لم يخ % % رج من العرق حين يفصد فصدا % % 16(@)(@@) % و حليم قد راقه الحلم حتى % % كاد مخطي الذنوب يذنب عمدا % % 17(@)(@@) % و جواد لو رام فيض الغوادي % % ان 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms124# يحاكيه عد ذلك فردا % % 18(@)(@@) % و رئيس كما تريد المعالي % % لا كمن آده المسير فردا % % 19(@)(@@) % و بليغ تنضد المدح فيه % % وهو أبهى منه وأنضر نهدا % % 20(@)(@@) % يرتجى سيبه ويخشى ذكاه % % فيرجى نقدا ويحذر نقدا % % PageV01P605 21(@)(@@) % خطبته وزارة وجدته % % في اكتساب العلى أجد وأجدى % % 22(@)(@@) % و رأت صلصلا بفضل علاه % % شهدت في الورى صحاب وأعدا % % 23(@)(@@) % و لعمري لقد دعته وزيرا % منتهى معشر لعلياه مبدا % % 24(@)(@@) % فكفى الجانبين مصرا وشاما % وأفاض العينين عدلا ورفدا % % 25(@)(@@) % و مشى في الورى على نهج حق % مستتبين الهدى وساد وأسدى % % 26(@)(@@) % و ارتدى فيهم رداء من الع % % ز وأما حسوده فتردى % % 27(@)(@@) % أيها الحاسد المعذب فيه % % جئت شيئا من الشقاوة إدا % % 28(@)(@@) % كيف ناويت سيدا كلما زا % % د عداة يزيده الله مجدا % % 29(@)(@@) % إن يكن في العفاة أبسط كفا % % فهو في المكرمات أبسط زندا % % 30(@)(@@) % خاف خلاقه فخيف إلى أن % % ضم من عدله ظباء وأسدا % % PageV01P606 31(@)(@@) % و أباد الطغاة بأسا ورعبا % وأعاد الجميل فينا وأبدى % % 32(@)(@@) % واحدا في مراتب الفضل تلقى % % حول أبوابه من الخلق جندا % % 33(@)(@@) % يرحم الجمع دون مغناه جمعا % % مستميرا ويتبع الرفد رفدا % % 34(@)(@@) % ماثنى الجاه عن ذليل ولا أع % % طى لذي حاجة عطاء وأكدى % % 35(@)(@@) % مسعد الرأي ذابح للأعادي % % فهو مهما خبرته كان سعدا % % 36(@)(@@) % ليس فيه عيب سوى أن % أياديه تجعل الحر عبدا % % 37(@)(@@) % يمم الشام بعد اقتار وقت % % لم تجد فيه للمناجح قصدا % % 38(@)(@@) % كم بعثنا إلى الدواوين طرسا % خائبا كاده الزمان فكدا % % 39(@)(@@) % طال ترداده إلى القوم حتى % % لو بعثناه وحده لتهدى % % 40(@)(@@) % فغدا الآن ذلك العسر يسرا % بحقيق وذلك المنع رفدا % % PageV01P607 41(@)(@@) % و سرى المال من شآم ومصر % كعموم السحاب قربا وبعدا % % 42(@)(@@) % عزمات تحفها بركات % مثلها منه للمالك تهدى % % 43(@)(@@) % و يراع من حده ونداه % % كاد بين السيوف أن يتحدى % % 44(@)(@@) % قلم أخضر المرابع لا غر % % وإذا كان عيش راجيه رغدا % % 45(@)(@@) % حملته أيدي الوزير فخلنا % % بارقا في سحابة قد تبدى % % 46(@)(@@) % يا وزيرا يهدي الثناء سناه % % ولهاه إلى المقاصد تهدى % % 47(@)(@@) % شكرتك الرواة عني بعز % % قاطعات السرى اكاما ووهدا % % 48(@)(@@) % ذاكرات جميل صنعك عندي % % بقواف بها الركائب تحدى % % 49(@)(@@) % سائرات في الأفق بين الجواري % % والجواري في 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms125# حسنها كالعبدا % % 50(@)(@@) % كل معنى كالنجم أوكل بيت % هو أهدى في الأفق من أن يهدى % % PageV01P608 51(@)(@@) % هاكها تخلد الثنا بمعان % % تترك الضد بالأشعة خلدا % % 52(@)(@@) % هكذا ينبت الصنيع نباتا % وكذا تحصد المعادي حصدا % % 53(@)(@@) % عش بظل الحبا وأنت المرجى % % وتبيد العدى وأنت المفدى % % 54(@)(@@) % ملئ البيت من يديك نوالا % فملأنا أبيات مدحك حمدا % % PageV01P609 البحر : - 1(@)(@@) % قدمت كالسيف إلى غمده % % واليمن موقوف على حده % % 2(@)(@@) % قد أثرت فيك ليالي السرى % % ما أثر السيف بإفرنده % % 3(@)(@@) % وعدت مشكور الثنا والسنا % % كذاك عود البدر في سعده % % 4(@)(@@) % لله ما أسعدها طلعة % يجيبها الوابل من مهده % % 5(@)(@@) % نعم وما أيمنها عزمة % % سلمها الرأي إلى رشده % % 6(@)(@@) % عزم فتى صورة أخلاصه % % في البر قد أفضت إلى حمده % % 7(@)(@@) % ماضر ركبا كان بدرا له % % أن لا يراعي النجم في قصده % % 8(@)(@@) % كأنني أبصر بين الفلا % % حماه يستدعي إلى رفده % % 9(@)(@@) % مخيما تنثر ألطافه % % نثر سقيط الوبل من عقده % % 10(@)(@@) % يستمسك العافي باطنابه % % فليس يحتاج إلى وده % % PageV01P610 11(@)(@@) % و ماجد حث ركاب السرى % % حث الرجا الساري إلى قصده % % 12(@)(@@) % أهلة تحمل بدر العلى % % لله ما تحمل من مجده % % 13(@)(@@) % هوادج تحملها من سرى % % فواقع الآل على مده % % 14(@)(@@) % حتى قضيت النسك من بعدما % % قضيت نسك الجود في وفده % % 15(@)(@@) % يرنو اليك الحجر المجتلى % % ياأيها العين بمسوده % % 16(@)(@@) % أعظم به من حجر للهدى % % كأنه خال على خده % % 17(@)(@@) % هذا وفي جلق وجد عشت % % طوارق الحزن إلى وقده % % 18(@)(@@) % هان حماها منذ فارقته % % ما أهون الغاب بلا أسده % % 19(@)(@@) % و مزق الروض بها كل ما % % حاكت خيوط الودق من برده % % 20(@)(@@) % شوقا إلى مرتحل أقسمت % % لا تبسم الأزهار من بعده % % PageV01P611 21(@)(@@) % فالعام مثل اليوم في قربه % % واليوم مثل العام في بعده % % 22(@)(@@) % حتى اذا عاد إلى صرحها % % قام إلى الغصن على قده % % 23(@)(@@) % و أقبلت تلثم آثاره % % تلك الشفاه الحمر عن ورده % % 24(@)(@@) % أبلج مارد إليها الحيا % % الا بشم الآس في رده % % 25(@)(@@) % ليث وغيث في سطا أو لها % فاحذره يا طالب واستجده % % 26(@)(@@) % يروق مثل السيف في صفحه % % وربما راعك في حده % % 27(@)(@@) % فالأمن كل الأمن في لينه % % والخوف كل الخوف في شده % % 28(@)(@@) % مهابة الزهد وعز التقى % % قد كفيا الواحد 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms126# في جنده % % 29(@)(@@) % تغفيه في الليل سهام الدجى % % وأنصل الادمع عن حشده % % 30(@)(@@) % لا يطمع الطالب في شأوه % وانما يطمع في رفده % % PageV01P612 31(@)(@@) % رفد أراد الغيث تشبيهه % % فعد ذاك الفعل من برده % % 32(@)(@@) % يعطي ويملينا معني الثنا % % فالمدح والإرفاد من عنده % % 33(@)(@@) % حقا لقد أنجبتمو يا بني % % شيبان في المجد وفي ولده % % 34(@)(@@) % مناسب غر لها رونق % أبصرت عقد الدر في نضده % % 35(@)(@@) % أواخر نم بها أول % ومجمع لم يغن عن فرده % % 36(@)(@@) % كما تلا التنزيل مستقبل المح % % راب والاتمام في حمده % % 37(@)(@@) % سجاه حب العفو حتى لقد % % كاد الفتى يذنب عن عمده % % 38(@)(@@) % و مر في المجد إلى غاية % ما حظ حاكيها سوى كده % % 39(@)(@@) % ذو قلم يجني الغنى والقنا % % من سمه الجاري ومن شهده % % 40(@)(@@) % يقدح في أفق العلى زنده % % وليس من يقدح في زنده % % PageV01P613 41(@)(@@) % يا سيدا إن أشك دهرا له % % كأنما أشكو أذى عبده % % 42(@)(@@) % ماذا جنى بعدك من صرفه % % لنازح أوحش من فقده % % 43(@)(@@) % حتى اذا هب نسيم اللقا % % قام الرجا يستن من لحده % % 44(@)(@@) % أهلا بفياض الندى لم يقل % % مادحه أحسن من ضده % % 45(@)(@@) % الهى قريضي عن غزال النقا % % تغزلا فيه وعن هنده % % 46(@)(@@) % فلم أصف من طاح من أجلها % % وأجله قلبي في وجده % % 47(@)(@@) % أغيد ذو ردف وخصر فكم % % في غوره أصبو وفي نجده % % 48(@)(@@) % يجرح أجفاني وأرنو له % % كأنني أقتص من خده % % 49(@)(@@) % يا ليته لي بالجفا موعدا % لانه يكذب في وعده % % 50(@)(@@) % و غادة مذ عقدت صدغها % % ما خرج العاشق عن عقده % % PageV01P614 51(@)(@@) % كأنها إذ خضبت غيبت % % في دمعي الكف إلى زنده % % 52(@)(@@) % دع ذا وعد للقول في معشر % غر وفي غيرهم عده % % 53(@)(@@) % لولا بنو العطار لم ينتشق % % عرف ندى يربو على نده % % 54(@)(@@) % لا توحش العلياء من نسلهم % % ولا ترى الشنعاء من فقده % % 55(@)(@@) % يكاد سفر ضم أخبارهم % % من طرب يخرج من جلده % % PageV01P615 البحر : - 1(@)(@@) % في الريق سكر وفي الاصداغ تجعيد % % هذي المدام وهاتيك العناقيد % % 2(@)(@@) % الراح ريقة من أهوى ولا عجب % ان راح وهو على العشاق عربيد % % 3(@)(@@) % تأتي على أبلق ألحاظ مقلته % % فهن بيض وفي أحشائنا سود % % 4(@)(@@) % ما أعجب الحب يلقاني بسفك دمي % % على النقا وهو محبوب 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms127# ومودود % % 5(@)(@@) % كأنه صنم في الحب متبع % هذا وما فيه الا القلب جلمود % % 6(@)(@@) % ظل الذوائب ممدود بقامته % للناظرين وطلع الثغر منضود % % 7(@)(@@) % كأن تلك اللآلي في مقبله % % مما ينظم في القرطاس محمود % % 8(@)(@@) % النافث السحر ألفاظا محللة % وكل لفظ بليغ عنه معقود % % 9(@)(@@) % و المقتفي أمد العلياء في طرق % طرف البروق بها تعبان مكدود % % 10(@)(@@) % له إلى السبق تقريب يفوت به % % وفي مداه على الباغين تبعيد % % PageV01P616 11(@)(@@) % تفردت بمعانيه براءته % فاعجب لغصن له كالورق تغريد % % 12(@)(@@) % ناهيك سهما تسميه الورى قلما % له إلى غرض العلياء تسديد % % 13(@)(@@) % حروفه مع ورق الدوح ساجعة % وغيرها مع دود القز معدود % % 14(@)(@@) % تصيد الملك أنواع البديع به % % ان الملوك على علاتها صيد % % 15(@)(@@) % في كف يقظان لافي القول ممتنع % % اذا أراد ولا في الفكر ترديد % % 16(@)(@@) % له على الرأي تنقيب ومطلع % وفي المقاصد تصويب وتصعيد % % 17(@)(@@) % يا سيدا لمواليه وقاصده % % في الود عطف وفي الاحسان توكيد % % 18(@)(@@) % ناشدتك الله في ود عنيت به % % شطرا من العمر لا يألوه مجهود % % 19(@)(@@) % راجع يقينك في ودي ودع عصبا % % لرأيهم في اقترابي منك تبعيد % % 20(@)(@@) % واردد مقال عداة لا اعتبار به % % ان الرديء على أهليه مردود % % PageV01P617 21(@)(@@) % لهم بذكري أضغان مناقضة % في القلب وقد وفي التحريش تبريد % % 22(@)(@@) % حاشا ثباتك من ايلام قلب فتى % ما فيه الا موالاة وتوحيد % % 23(@)(@@) % لي من مباديء عمري فيك فرط ولا % % فم المصائب عن ذكراه مسدود % % 24(@)(@@) % فهل أضل وجنح الشيب متضح % بعد الرشاد وليلات الصبى سود % % 25(@)(@@) % ان كنت أظهرودا لست أضمره % % فلا وفى لي من نعماك مقصود % % 26(@)(@@) % كن كيفما شئت من صد ومن عطف % % فما ودادك في أحشاي مصدود % % 27(@)(@@) % فلست أكره شيئا أنت صانعه % % مهما صنعت فمشكور ومحمود % % PageV01P618 البحر : - 1(@)(@@) % لا ورشف اللمى ولثم الخدود % % ما عذولي عليك غير حسود % % 2(@)(@@) % هائم في هواك مثلي ولكن % % يدفع الوهم عنك بالتفنيد % % 3(@)(@@) % يا مليحا طرفي به في نعيم % % وفؤادي في النار ذات الوقود % % 4(@)(@@) % لا تسل عن مسيل دمعي بخدي % % قتل الدمع صاحب الأخدود % % 5(@)(@@) % كل يوم تروع قلبا خليا % يا بديع الحلى بحسن جديد % % 6(@)(@@) % حبذا في حلاك لام عذار % لابتداء الغرام والتوكيد % % 7(@)(@@) % لك وجه 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms128# يعزى له كل حسن % كاعتزاء العلى إلى محمود % % 8(@)(@@) % سيد في مديحه بهجة الصد % % ق كمثل التسبيح والتحميد % % 9(@)(@@) % و إمام أضحت إلى فضله الاق % % لام ما بين ركع وسجود % % 10(@)(@@) % ليس فيه عيب سوى أن نعما % % ه تفيد الأحرار رق العبيد % % PageV01P619 11(@)(@@) % و معاني ألفاظه تنفث الس % % حر على بعدها من التعقيد % % 12(@)(@@) % كل سجع يهيم وهو مداد % % فوق غصن اليراع بالتغريد % % 13(@)(@@) % و قريض سلابه كل راو % عن حبيب وشاب رأس الوليد % % 14(@)(@@) % خص في وصف لفظه وبهاه % % بأمين على الورى ورشيد % % 15(@)(@@) % و حمته سطوره بصفوف % زحفت من طروسه ببنود % % 16(@)(@@) % فاذا جرد اليراع فحدث % % عن سطا كفه حديث الجنود % % 17(@)(@@) % يا اخا الفضل لا يعطل في با % % بك جيد ومسمع من عقود % % 18(@)(@@) % أصبح الدهر جنة بك زهرا % % ء فعش في الأنام عيش الخلود % % 19(@)(@@) % لو تصدى عبد الحميد لعليا % % ك للجت أسبابها في الصعود % % 20(@)(@@) % وربا كل ساعة فضلك الج % % م وعبد الحميد عبد الحميد % % PageV01P620 21(@)(@@) % بك فازت يدي وأنجب ظني % % وزكا مقصدي وسار قصيدي % % 22(@)(@@) % كن موتى بنات فكري ولكن % % بعثت من مقامك المحمود % % PageV01P621 البحر : - 1(@)(@@) % حمدت دموعي إذ وفت بوعودها % % فكأن ما في مقلتي في جيدها % % 2(@)(@@) % وتأودت تدعو للذة ضمها % % ما دامت الرقباء طوع هجودها % % 3(@)(@@) % وهممت فامتنعت علي نهودها % % واحسرتا حتى رقيب نهودها % % 4(@)(@@) % سمراء تطعن بالقوام وربما % % نظرت فصالت بيضها مع سودها % % 5(@)(@@) % وقفت عليها لوعتي وصبابتي % % ومدامعي تجري على معهودها % % 6(@)(@@) % لم يبق في زمن الوزير بقية % في الظلم الا ظلمها لعميدها % % 7(@)(@@) % هذا وقد أصبحت في أبوابه % % أدعى وأحسب من عديد عبيدها % % 8(@)(@@) % لاغرو ان نفحت مدائح ناظم % والخضر سار في خلال نشيدها % % 9(@)(@@) % ذو همة رأت المكارم في الورى % % ضيعا فأعجبها افتراع نجودها % % 10(@)(@@) % ومواهب مثل السحائب برة % % يوم الندى لقريبها وبعيدها % % PageV01P622 11(@)(@@) % ومنازل ما بين كفك والغنى % % يا مشتكي الاقتار غير ورودها % % 12(@)(@@) % يتواضع العلماء فيها هيبة % لأعز ممدوح الفعال سديدها % % 13(@)(@@) % ومبشر بالقاصدين كأنه % % وأبيك قاصدها وطالب جودها % % 14(@)(@@) % يلقى العدى وذوي المقاصد والنهى % % بمميتها ومغيثها ومفيدها % % 15(@)(@@) % يا بهجة العليا ونسر صفيها % % وملاذ عاديها وغيظ حسودها % % 16(@)(@@) % أما نفوس عداك من غيظ فقد % % كادت تكون 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms129# جسومها كلحودها % % 17(@)(@@) % فافخر بنفسك إنها النفس التي % % كملت فما تبغي سوى تأبيدها % % 18(@)(@@) % وتهن بالاعوام نزع خليقها % % مستأنف النعمى ولبس جديدها % % 19(@)(@@) % تجلى أهلتها اليك محبة % فكأنها أهوت لشكر سجودها % % 20(@)(@@) % و لقد قصدتك شاكيا حر الظما % % فكرعت في عذب الصلات برودها % % PageV01P623 21(@)(@@) % و تقلدت عنقي عطاياك التي % % حكمت في الأيام عن تقليدها % % 22(@)(@@) % فلأ سمعنك ما ترنم صادح % % مدحا يصغر ماضيات وليدها % % 23(@)(@@) % لا ينبغي حر المقال فريده % % إلا على حر الكرام فريدها % % PageV01P624 البحر : - 1(@)(@@) % أهلا بها صحف الامام المسند % % في اليوم مشرقة الثناء وفي غد % % 2(@)(@@) % تختال في ملك البيان حروفها % % وحروفنا من حولها كالأعبد % % 3(@)(@@) % يا نظمها المخدوم بعد نظيمها % % كم خادم لك من صواب مرشد % % 4(@)(@@) % كم في حروفك من عيون فرائد % لكنها لعيوننا كالإثمد % % 5(@)(@@) % أضواؤها وسناؤها ووفاؤها % % للمجتني والمجتلي والمجتدي % % 6(@)(@@) % ورقيمة الالفاظ باكر بابها % % كهف يروح له الثناء ويغتدي % % 7(@)(@@) % من كل قافية لفاغرها فم % عذب اذا ماذقته قلت ازدد % % 8(@)(@@) % وكأن أسماء الذين تجمعوا % % فيها مصابيح تضيء بمسجد % % 9(@)(@@) % فأذن لناظمها وابراهيمها % % تصفى قعودهما بفضل محمد % % 10(@)(@@) % سئلت أجازتنا لهم ولمثلهم % % يروي الاجازة سيد عن سيد % % PageV01P625 11(@)(@@) % ونعم أجزت لهم رواية ما اقتضوا % % بالشرط من لفظ أجزت ومسند % % 12(@)(@@) % ومصنفات لست عنها راضيا % فمسود منها وغير مسود % % 13(@)(@@) % أهملت منها ما أردت وبعضها % % ناديت لا تهلك أسى وتجلد % % 14(@)(@@) % خذها إجازة طائع لك منشد % % للمدح فأعجب للمجيز المنشد % % 15(@)(@@) % واسبقه بالعذر البسيط فإن لي % % هما مديدا إن أقل قال اقصد % % 16(@)(@@) % قلمي ولفظي معرضان كلاهما % % لامن لساني إن نطقت ولا يدي % % PageV01P626 البحر : - 1(@)(@@) % وا وحشتي لمقام منك محمود % % واحسرتي لوداد فيك معهود % % 2(@)(@@) % لو شام طرفك ما ألقاه من حرب % لم تدر من هو منا الهالك المودي % % 3(@)(@@) % إناإلى الله من رزء دنا فرمى % % دمعي وشجوي باطلاق وتقييد % % 4(@)(@@) % يا معرضا عن لقاء الصحب منقطعا % وكان أكرم مصحوب ومودود % % 5(@)(@@) % بالرغم أن أنشد الألفاظ عاطلة % من حلي مدحك أثناء الأناشيد % % 6(@)(@@) % وأن أعوض منثور المدامع عن % % سماع در من الأقوال منضود % % 7(@)(@@) % لم يبق بعدك ذو سجع أعارضه % % الا الحمائم في نوح وتعديد % % 8(@)(@@) % لم يبق بعدك من تدعو بديهته % % لحج بيت 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms130# من الأشعار مقصود % % 9(@)(@@) % من للدواوين يقضي بالتأمل في % % مخرج من معانيها ومردود % % 10(@)(@@) % كنا نعدك فردا في موازنها % % لقد رزئنا بموزون ومعدود % % PageV01P627 11(@)(@@) % من للرسائل في لامات أحرفها % % تغزو العداة بألفاظ صناديد % % 12(@)(@@) % من للتصانيف ضمت كل شاردة % % وصححت بعد تبديل وتبديد % % 13(@)(@@) % لله ماذا لجدواها وأحرفها % % من القلائد في سمع وفي جيد % % 14(@)(@@) % سقيا لعهدك من سحاب ذيل تقى % مضى وليس الأذى منه بمعهود % % 15(@)(@@) % عضب اذا رمت زهدا أو حذرت وغى % % أرضاك في ذا وفي هذا بتجريد % % 16(@)(@@) % هي المنية لا تنفك صائدة % نفوسنا بين مسموع ومشهود % % 17(@)(@@) % أين الملوك الأولى كانت منازلهم % % تزاحم البحر في عز وتسييد % % 18(@)(@@) % لم يحمهم سرد داود الذي ملكوا % % من المنون ولا جند ابن داود % % 19(@)(@@) % ايه سقاك شهاب الدين صوب حيا % يكاد يعشب أطراف الجلاميد % % 20(@)(@@) % لو لم تكن بوفاء القصد تسعفنا % % كانت بنوك وفا عن كل مقصود % % PageV01P628 21(@)(@@) % في كل معنى أرى حسناك واضحة % فحسرتي كل وقت ذات تجديد % % PageV01P629 البحر : - 1(@)(@@) % أسكنت قلبي لحدك % % لا خير في العيش بعدك % % 2(@)(@@) % مالدار بعدك عندي % % أرى وإلا فعندك % % 3(@)(@@) % يسيل أحمر دمعي % % لما تذكرت خدك % % 4(@)(@@) % وقد بالهم قلبي % % لما تذكرت قدك % % 5(@)(@@) % ياسائل الدمع إيه % فما أجوز ردك % % 6(@)(@@) % أقصدتني يازماني % % كأنني كنت قصدك % % 7(@)(@@) % وكان ماخفت منه % % فأجهد الآن جهدك % % 8(@)(@@) % لا لينك اليوم أرجو % % ولست أرهب شدك % % 9(@)(@@) % قيضت كف مرادي % % فاقدح بقلبي زندك % % 10(@)(@@) % و راح دينار خد % % عليه كم خفت نقدك % % PageV01P630 11(@)(@@) % عبد الرحيم برغمي % % أن تسقي العين عهدك % % 12(@)(@@) % فأجعل النوم وردي % % في الليل والدمع وردك % % 13(@)(@@) % أشقيت جدي بشكل % بني يا ثكل جدك % % 14(@)(@@) % أبكي فيبكي كأنا % % حمائم النوح بعدك % % 15(@)(@@) % ما كنت أحمل هجرا % فكيف أحمل فقدك % % 16(@)(@@) % و ما تخيلت أني % % أشكو صداك وصدك % % 17(@)(@@) % لهفي عليك لحسن % قد كان أسبل بردك % % 18(@)(@@) % لهفي عليك لعقل % قد كان أحسن عقدك % % 19(@)(@@) % لهفي عليك لثغر % قد كان يفضل عقدك % % 20(@)(@@) % لم أنس لثمك لما % % أحسست بالموت بعدك % % PageV01P631 21(@)(@@) % و الله لاسمت صبري % % من بعد ما سمت شهدك % % 22(@)(@@) % أف لقلبي إن لم % % يوف بالحزن ودك % % 23(@)(@@) % وقوع بيتي لسن % لم يوف في العمر عدك % % 24(@)(@@) % كنت الهلال لأفق % فعارض الأفق 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms131# سعدك % % 25(@)(@@) % وكنت فرع نبات % فأذبل الموت وردك % % 26(@)(@@) % و كنت نهر بحار % لو عشت أحييت مجدك % % 27(@)(@@) % و آها لأقلام علم % عدمن يانهر مدك % % 28(@)(@@) % لاغرو إن بات دمعي % % بالري ينجز وعدك % % 29(@)(@@) % أصبحت في الحزن وحدي % % اذ كنت في الحسن وحدك % % 30(@)(@@) % فيا أساي تمرد % % و يا سلوي تمردك % % PageV01P632 31(@)(@@) % و يا حيا الغيث أجزل % % لذابل العطف رفدك % % 32(@)(@@) % و اجعل بكاك عليه % نداك والنوح رعدك % % 33(@)(@@) % فأنت صاحب عهد % فوف للحسن عهدك % % 34(@)(@@) % ويا رحيما دعاه % واصل برحماك عبدك % % PageV01P633 البحر : - 1(@)(@@) % حيت سفرتي من نداك المديد % % وخيل البريد مني المستزيد % % 2(@)(@@) % فيا لك خانية بابها % % إلى الشام يفضي لباب البريد % % 3(@)(@@) % يقول بني إذا ما منحت % % أسيدنا دم لهذي العبيد % % 4(@)(@@) % بوالدنا غيبة ياله % % حبيبا لهم غائبا عن وليد % % 5(@)(@@) % ويشتاق أبناؤه والبنات % % وصاحبة البيت بيت القصيد % % 6(@)(@@) % نأى بيتها ونأى ذهنه % % كما قد نأى عنه بيت النشيد % % 7(@)(@@) % فغث وأغث مغرما وابق ذا % % نوال بسيط وفضل مديد % % PageV01P634 البحر : - 1(@)(@@) % تركت التغزل من أول % % وصيرته بعد مدح مرادي % % 2(@)(@@) % وقالت لي العين ذاك الطعام % % ما كان أبهجه في سوادي % % 3(@)(@@) % أيامن أياديه مشهورة % لدى كل واد وفي كل ناد % % 4(@)(@@) % وما سرق القول فيه الثنا % % فحاشاه من قطع تلك الأيادي % % 5(@)(@@) % أذكر مولاي ما قلت في % % مقاطيع شعر تجوب البوادي % % 6(@)(@@) % عهدت فؤادي ملآن من % % شجون ولا موضع لازدياد % % 7(@)(@@) % إلى أن تعشقت حلو الكنافا % % ت للحلو زاوية في فؤادي % % PageV01P635 البحر : - 1(@)(@@) % خير عيد بكل خير يعود % % لك يا من لقاه للعيد عيد % % 2(@)(@@) % قم لنحر العدى ونحر العطايا % % وابق تسعى إلى حماك الوفود % % 3(@)(@@) % وعدى الفضل ناقصون ولكن % % نحرهم جائز الضحايا مفيد % % 4(@)(@@) % يا إماما له علوم وجدوى % % كامل بحرها سريع مديد % % 5(@)(@@) % وجوادا الاعيب فيه سوى نع % % مى تعيد الأحرار وهي عبيد % % 6(@)(@@) % لا عدمنا أطواق نعماك فيها % % كل وقت بمدحك التغريد % % 7(@)(@@) % كلنا في محبة ابن علي % يتوالى والجود منه يزيد % % PageV01P636 البحر : - 1(@)(@@) % جميعنا في عشقك البادي % % سواء العاكف والبادي % % 2(@)(@@) % ياقمرا قد سام عشاقه % % خسفا بهجران وابعاد % % 3(@)(@@) % أضلنا الحب ولكن لنا % % نعم الامام الراشد الهادي % % 4(@)(@@) % بهاء دين الله نجل الاولى % % سموا بأنصار وانجاد % % 5(@)(@@) % ذو العلم ألقوه 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms132# إلى نجلهم % % لا نجل صباغ وحداد % % 6(@)(@@) % في الدين والدنيا لنا بره % % من قبل انشاء وانشاد % % 7(@)(@@) % أنجدنا جودا فأمداحنا % % ما بين إتهام وإنجاد % % PageV01P637 البحر : - 1(@)(@@) % دانت لك الدنيا وملت لأرغد % % دارين في يوم تزف وفي غد % % 2(@)(@@) % يا تاج دين الله والدنيا الذي % % لاقت مكانته بفرق الفرقد % % 3(@)(@@) % لله مالغز به غزلية % سجدت لها الدالات نوع تعبد % % 4(@)(@@) % شهد اللسان بها لفاتحة فما % عذبا اذا ماذقته قلت ازدد % % 5(@)(@@) % من كل قافية تقوم لكل ذي % % ديوان نظم قبلنا بمجلد % % 6(@)(@@) % هل دافع همي فأنشد بحرها % % يا نيل مصر قد أتيت بمفرد % % 7(@)(@@) % هل غير قولي قائم بصفات ما % % قد قلت يا ابن علي لا ومحمد % % PageV01P638 البحر : - 1(@)(@@) % تنهدت لما أذكرتني النواهد % زمان الصبى والعيش ريان مائد % % 2(@)(@@) % وغيداء أما عيبها ردفها % % ثقيل وأما ثغرها فهو بارد % % 3(@)(@@) % بأغزال شعري في بديع صفاتها % % ومدح رئيس الشام تسري القصائد % % 4(@)(@@) % رئيس وفى حق المعالي فحبذا % % مهيب وهوب شامل الجود زاهد % % 5(@)(@@) % له قلم في صدر محراب درجه % % لباريه في كل المقاصد ماجد % % 6(@)(@@) % كريم الورى يا ابن الكرام اذا انتمى % % ليهنك عيد للسعود معاود % % 7(@)(@@) % كذا ألف عيد شرف اسمك زينه % % وهنئت الدنيا بأنك خالد % % PageV01P639 البحر : - 1(@)(@@) % قف بالحمى بعد البدور وناد % % أرأيت كيف خبا ضياء النادي % % 2(@)(@@) % ومحامل ظعنت بمهجة ناحل % % أرأيت من حملوا على الأعواد % % 3(@)(@@) % لو رمت أن أفدي الحبيب بمهجتي % % وهو الأصح وفاد كنت الفادي % % 4(@)(@@) % هيهات يعدل ما ضيا ماقر لي % % طرف وجنة مهجتي بسواد % % 5(@)(@@) % أما سواد الليل فهو كما ترى % % طرف المنام على الدوام سهادي % % 6(@)(@@) % بكرت على مثواك أدمع نائح % % كالنيل ذات وفا وذات منادي % % 7(@)(@@) % سخنت كحمام عليك مدامعي % % لما رزئت بكوكب وقاد % % PageV01P640 البحر : - 1(@)(@@) % الكاس في كف غادة رود % % قم يا أخا النسك غير مطرود % % 2(@)(@@) % تحثها بالغناء غانية % تعرب فيه عن لحن داود % % 3(@)(@@) % ان شئت كالغصن ذات منعطف % % أو شئت كالطير ذات تغريد % % 4(@)(@@) % تكاد ان مس عودها يدها % % تجري مياه الدلال في العود % % 5(@)(@@) % سادت بحسن ونعمة فلذا % % قد صح قول الورى لها سودي % % 6(@)(@@) % يا حبذا كأسها وروض حمى % % بأنعم القطر حالي الجيد % % 7(@)(@@) % كلتاهما جملة الجمال 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms133# فما % % بدر الدجى عندها بمعدود % % 8(@)(@@) % بل حبذا غادة وغانية % % في الحسن كالحرف ذات تشديد % % 9(@)(@@) % تثني شذاه على الغمام كما % % تثني على سادتي أناشيدي % % PageV01P641 البحر : - 1(@)(@@) % حاشاك يا عارض المكارم من % % عارض بأس يضني وتنكيد % % 2(@)(@@) % قم للعلى والعلوم مشتملا % ثياب سراء ذات تجديد % % 3(@)(@@) % يعتل عنك النسيم سائره % % وتحمل السقم أعين الغيد % % 4(@)(@@) % أنت الذي خبره ومنظره % % آذن أمداحنا بتسديد % % 5(@)(@@) % سرت لمغناك من مآربنا % % نجائب فاستوت على الجودي % % PageV01P642 البحر : - 1(@)(@@) % ألا في سبيل الله فرع كتابة % ثنته المنايا وهو ريان مائد % % 2(@)(@@) % وكوكب فضل قدره قد سما به % % إلى أن بكى حزنا عليه عطارد % % 3(@)(@@) % ودينار وجه غاله صرف دهره % % سريعا كأن الصرف للباس ناقد % % 4(@)(@@) % وعيشك يا يحيى لوانك تفتدي % % لهنئت الدنيا بأنك خالد % PageV01P643 البحر : - 1(@)(@@) % رحلت اليك ركائب ومدائح % فإليك يقصد راغب ويقصد % % 2(@)(@@) % سعدت بك الأرض التي وليتها % % من بعد ما أمست بغيرك تكمد % % 3(@)(@@) % واذا نظرت إلى البقاع وجدتها % % تشقى كما تشقى الرجال وتسعد % % PageV01P644 البحر : - 1(@)(@@) % الا لله ما أزكى فعالا % وأقوالا وما أجدى وأندى % % 2(@)(@@) % رقيت إلى النجوم فجئت منها % % بأحسن صورة تهدي وتهدى % % 3(@)(@@) % ولما أن بعثت بها نثارا % نظمنا من حلاها المدح عقدا % % PageV01P645 البحر : - 1(@)(@@) % يا سيدي قل لي ما طائفة % يثني عليها غائب وشاهد % % 2(@)(@@) % لله ما أيمنها في غربة % % ترجى وما أبركها ياقاصد % % 3(@)(@@) % تنوع القول فقيل أربع % حروفها وقيل حرف واحد % % PageV01P646 البحر : - 1(@)(@@) % وما صامت يمضي ويرجع حائرا % ويقضي على أوصاله الوصل والصد % 2(@)(@@) % كأن الأسى آلى عليه ألية % فما فيه إلا النفس والعظم والجلد % % 3(@)(@@) % وأحرفه خمس على أن شطره % % ثلاثة أخماس الحروف التي تبدو % % PageV01P647 البحر : - 1(@)(@@) % أهلتني للعتب حتى لقد % % لذ لسمعي وهوصعب شديد % % 2(@)(@@) % ورحت لو زادت دموعي عسى % % عتابك الحلو لسمعي يزيد % % 3(@)(@@) % هذا ولو قطعتني لذ لي % % وسرني أني ببدر شهيد % % PageV01P648 البحر : - 1(@)(@@) % أمولاي شمس الدين دمت مهنئا % ودمت كريما شاهد الذكر سائدا % % 2(@)(@@) % نرى الفضل يغنى عن أناس وإنما % % لك الفضل يحيى يا ابن جعفر خالدا % % PageV01P649 البحر : - 1(@)(@@) % شكرا لمولانا الذي قال في % % ثنائه الواصف قولا سديد % % 2(@)(@@) % أقسم أن الوقت وقت صفا % % وان هذا النشو نشو سعيد % % PageV01P650 البحر : - 1(@)(@@) % أتيتك يا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms134# أزكى البرية جامعا % لأمرين في يوم من الدهر وافد % % 2(@)(@@) % هنى وعزا لا عتب فيه لأنني % % أهني بعشر إذ أعزي بواحد % % PageV01P651 البحر : - 1(@)(@@) % أفديه أعمى مغمدا لحظه % % ليرتعي في خده الوردي % % 2(@)(@@) % تمكنت عيناي من وجهه % % فقلت هذي جنة الخلد % % PageV01P652 البحر : - 1(@)(@@) % وافت أصابع نيلنا % % وطمت فأكمدت الأعادي % % 2(@)(@@) % وأتت بكل جميلة % % ماذي أصابع ذي أياد % % PageV01P653 البحر : - 1(@)(@@) % قل للكرام الكاتبين من الورى % % مالي أجرب عهدكم وأعود % % 2(@)(@@) % مالي مرضت فلم يعدني عائد % منكم ويمرض كلبكم فأعود % % PageV01P654 البحر : - 1(@)(@@) % عذلوني في هوى أغيد قد % % زاد أشجاني وفي تركي لغاده % % 2(@)(@@) % ثم قالوا عن سليمى لا تحل % % قلت محبوبي سليمى وزياده % % PageV01P655 البحر : - 1(@)(@@) % سقى الله جسما منك أودى به الضنى % % فأودى بعيني البكى والتسهد % % 2(@)(@@) % وقد كان مسلولا يهيج حسرتي % % فكيف به تحت الثرى وهو مغمد % % PageV01P656 البحر : - 1(@)(@@) % وصلتنا ديوك برك تزهو % % بوجوه جميلة مستجاده % % 2(@)(@@) % كل عرف يروق حسنا واني % % أرتجي أن تكون عرفا وعاده % % PageV01P657 البحر : - 1(@)(@@) % أهلا بأوفى الورى وأقوى % % أياديا في الندى وأندى % % 2(@)(@@) % نحب بيروت إذ نراه % % وإن يغب لا نحب صيدا % % PageV01P658 البحر : - 1(@)(@@) % نعم الدواة حكت بيض الظبا فلها % % بين الممالك تمهيد وتشييد % % 2(@)(@@) % كأن أقلامها منها منضلة % فلم يفتها إلى الأغراض تسديد % % PageV01P659 البحر : - 1(@)(@@) % بلد بعد الذكاء ذهني % % تشتت الرزق في البلاد % % 2(@)(@@) % فغير مستنكر حمار % أهدى حزاما إلى جواد % % PageV01P660 البحر : - 1(@)(@@) % برغم العدى إنا فقدناك أوحدا % اذا اجتمعت أرباب فضل وسؤدد % % 2(@)(@@) % دعتك المنايا فاقتفيت سبيلها % % وتلك سبيل لست فيها بأوحد % % PageV01P661 البحر : - 1(@)(@@) % تركتني بالوعود أسعى % % وما على حالتي سعاده % % 2(@)(@@) % وكل قود سألت منه % % يقول لي رح بلا قياده % % PageV01P662 البحر : - 1(@)(@@) % مضيت وقد كانت لمن أنت عنده % % مصائد نرجو نفعها ونطارد % % 2(@)(@@) % فأصبح يبكي والمجر الذي خلا % % ومثلك من تبكي عليه المقاود % % PageV01P663 البحر : - 1(@)(@@) % معنى الفضائل والندى والبأس لي % % والسيف مشتهر بمعنى واحد % % 2(@)(@@) % بالنفس أضرب في نضار ذائب % والسيف يضرب في حديد بارد % % PageV01P664 البحر : - 1(@)(@@) % أرى الشعراء مضوا سوقة % % ولابن سنا الملك ملك عتيد % % 2(@)(@@) % وقد طوبقوا باسمه في القريض % % فمنهم شقي ومنهم سعيد % % PageV01P665 البحر : - 1(@)(@@) % روت عيني التسهد عن قتاده % % ومن لوني وسقمي عن جراده % % 2(@)(@@) % ومن عذل العذول عن انتقاص % % ولكن 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms135# من هواكم عن زياده % % 3(@)(@@) % حماه لحيكم وثنا ابن يحيى % % كلا السندين يروى عن حماده % % 4(@)(@@) % بليغ مع وزارته وقاض % % بأعناق الانام له شهاده % % 5(@)(@@) % حمى العليا بفضل فاضلي % زكا وذكا وأوغل في السياده % % 6(@)(@@) % يسابق كل يوم قاصديه % % بعادي خيره والخير عاده % % 7(@)(@@) % دعونا بره شاما ومصرا % % فواصل في الافاءة والافادة % % PageV01P666 البحر : - 1(@)(@@) % أعد لنا السمر الاشهى نجدده % % دار النحاس ونادي الشط والنادي % % 2(@)(@@) % ترى سفائنه كالعيس سائرة % % والضب والنون والملاح والحادي % % 3(@)(@@) % و روضة العيش في العلياء آنفة % % ما واصلت بين إتهام وإنجاد % % 4(@)(@@) % ثلاثة تعطف الدنيا علي بها % % أوطان أنسي وأحبابي وأعيادي % % 5(@)(@@) % ليهنك العيد يا عيدا ويا سندا % % للعالمين رووا في الحمد إسنادي % % 6(@)(@@) % مفطرا فم وفد أو كبود عدى % % يا بعد ما بين أفواه وأكباد % % 7(@)(@@) % نعم بدا فضل مولانا وعارضه % % جهد الثناء وكان الفضل للبادي % % PageV01P667 البحر : - 1(@)(@@) % كذا أبدا نلتقي كل عيد % % بسعد جديد وجد سعيد % % 2(@)(@@) % لك الله من وافر بحره % % بفضل بسيط وظل مديد % % 3(@)(@@) % و خير عماد أعادت علاه % % وأعلت قواعد بيت مشيد % % 4(@)(@@) % لو ان بيوت العلى نظمت % % لأصبح بيتك بيت القصيد % % 5(@)(@@) % يقول الثنا فيه إما سجعت % % فانك طوقت بالجود جيدي % % 6(@)(@@) % فيالك من عيد نحر هناه % % يقول لأبيات مدح أعيدي % % 7(@)(@@) % تنظم فيه عقود الثناء % % وفي البحر يحسن نظم العقود % % PageV01P668 البحر : - 1(@)(@@) % رب عيش واصلتنا فيه غيد % % أنا عبد عربي فيها سعيد % % 2(@)(@@) % تعمر الأبيات حسنا إذ به % % وثنا الممدوح قد شيد القصيد % % 3(@)(@@) % يا أمينا بالتقى معتضدا % فهو مهدي وهاد ورشيد % % 4(@)(@@) % هكذا كل الليالي موسم % في حماك الرحب والأيام عيد % % 5(@)(@@) % من نداك الجم والعلم معا % لك بحران بسيط ومديد % % 6(@)(@@) % و لقد أشكو لبعض الناس في % % ليلة النصف كما يشكوالوحيد % % 7(@)(@@) % قاسموني خطيتها عنتا % فيهم الحلوى وفي قلبي الوقود % % PageV01P669 البحر : - 1(@)(@@) % جرى دمعي إلى ولدي وأهلي % % فقالت مصر نيلي في الزياده % % 2(@)(@@) % فكف دموع عينك عن بلادي % % والا كن فتى يمضي بلاده % % 3(@)(@@) % فقلت أريد تسفيرا وزادا % فقالت لي بزائدها وزاده % % 4(@)(@@) % أليس علاء دين الله أعطى % % فقلت وصبحة يعطي وعاده % % 5(@)(@@) % و جاها فاتحا بابي مزيد % % سرى ومجاورا باب السعادة % % 6(@)(@@) % بفضلك يا ابن فضل الله 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms136# عادت % % وعاد حديثها أهل السيادة % % 7(@)(@@) % روت عن قرة عين تراكم % % وعين الضد تروي عن قتاده % % 8(@)(@@) % تذكر أهله وبنيه صب % نوى سفرا ولله الإرادة % % 9(@)(@@) % و صور فكره للبين ركبا % فبادر جفن عينيه المزاده % % 10(@)(@@) % و مثلي من بكى لفراق باب % علائي الفعال المستجاده % % PageV01P670 11(@)(@@) % جواري الأفق تخدم زائريه % % بتوفيق وتتبعهم سعاده % % 12(@)(@@) % فيامن لم أزل أحظى لديه % % بفضل جامع باب الزياده % % 13(@)(@@) % بقيت ممدحا في كل ناد % مدائح كلها وسطى القلاده % % 14(@)(@@) % فما ذكري حبيب لها بباك % % ولا عبث الوليد أبا عباده % % 15(@)(@@) % وزير الملك دمت لنا ملاذا % مديد الظل مبسوط السعاده % % 16(@)(@@) % عوائد جاهه وعطاه تأتي % % فيالك صبحة تأتي وعاده % % 17(@)(@@) % و يالك عادة من بيت جود % ومنا في مدائحهم شهاده % % 18(@)(@@) % إذا سفرا قصدنا أو مقاما % فإن قرى الفتى منه وزاده % % 19(@)(@@) % فيا فخر الوزارة يا ختاما % لها ياذا المحاسن والإفاده % % 20(@)(@@) % فهذا البيت جامع عين بر % وباب صلاته باب الزياده % % PageV01P671 21(@)(@@) % بقيت لعادة في الجود منكم % % ومنا في مدائحكم شهاده % % PageV01P672 البحر : - 1(@)(@@) % عسى لعليل الجسم طيفك عائد % % كريم اللقا والمكرمات عوائد % % 2(@)(@@) % لقد حج في الطيف بالوصل مرة % % فهل هو في حج الوصال معاود % % 3(@)(@@) % ألا إنني في الحب يا ظبية النقا % % كما في العلا بن القيس اني واحد % % 4(@)(@@) % شريف مسماه الممدح واسمه % % وشائد بيت المدح والمنح سائد % % 5(@)(@@) % تهن به حج القبول ودعوة % % عليها لأنوار القبول شواهد % % 6(@)(@@) % تقول لهاتيك المناسك مرحبا % بكم يا بني مخزوم حين تشاهد % % 7(@)(@@) % لقد شرفت ناس وبادت وانما % % لكم شرف في سائر الناس خالد % % PageV01P673 البحر : - 1(@)(@@) % روحي فدآء مهفهف مياد % % حلو قد استعذبت فيه سهادي % % 2(@)(@@) % قالت محاسنه لكل متيم % للحلو زاوية بكل فؤاد % % 3(@)(@@) % هنئت بالعيد الرضى يا عيده % % يا واحد العلماء والزهاد % % 4(@)(@@) % في ري صاد بالندى لك فكرة % وسرى لأفصح ناطق بالضاد % % 5(@)(@@) % و العبد قد وافى الشتاء وجسمه % % قد سابق الإبراق بالإرعاد % % 6(@)(@@) % ان أخرت بيروت عود جوادها % % فنداك يدعونا لخير جواد % % PageV01P674 البحر : - 1(@)(@@) % بفيت بقا الايام للفضل خالدا % وهن الورى في العلم والجود واحدا % % 2(@)(@@) % ولا عدم الحال الضعيف موافيا % لديك بأنواع اللهى وعوائدا % % 3(@)(@@) % و لا زلت بالأقلام والحلم زائدا % تظل بها 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms137# عن حوزة الدين ذائدا % % 4(@)(@@) % و حقك لو جاء الغمام بشامة % يساجل كفيك الندى جاء واردا % % 5(@)(@@) % و لو أن فيض النيل باراك في العطا % % بمصر لما استحلت له الناس زائدا % % PageV01P675 البحر : - 1(@)(@@) % عاد الركاب لراجيه وقد خطرت % % ذكرى الغمام وذكرى النيل في الجود % % 2(@)(@@) % فقلت يا نيل حمل غير مطرد % ويا غمام تفضل غير مطرود % % 3(@)(@@) % هذا ابن إسحاق تنجينا براحته % % أقلامه الحمر في أحوالنا السود % % 4(@)(@@) % تفاحة العرف نجنيها وتطربنا % % فيا أثيلاتها بوركت من عود % % PageV01P676 البحر : - 1(@)(@@) % أشكو إلى الله لا إلى أحد % % فما عدا قتل لوعتي أحدا % % 2(@)(@@) % أغيد لو مزق الضنى جسدي % % ما حال بي عن غرامه أبدا % % 3(@)(@@) % منفرد الحسن لا نظير له % % صيرني في الغرام منفردا % % 4(@)(@@) % يا ليته بالصدود يوعدني % % لأنه لا يفي بما وعدا % % PageV01P677 البحر : - 1(@)(@@) % يا خاتم الوزراء الأكرمين ويا % % أوفى ذوي الفخر في العلياء توكيدا % % 2(@)(@@) % و يا مؤيد في قول وفي عمل % توقيع عبدك يرجو منك تأييدا % % 3(@)(@@) % عسى تقلده برا ومكرمة % فيغتدي ذلك التوقيع تقليدا % % PageV01P678 البحر : - 1(@)(@@) % هناء بالصيام وما يليه % % من الأعياد في رتب السعاده % % 2(@)(@@) % تزاوج بين أجر أو ثناء % % بوارد ما تشاء من السياده % % 3(@)(@@) % و أرجو أن يعاد سقيم حظي % % لدرجي فهو محتاج العياده % % PageV01P679 البحر : - 1(@)(@@) % برغمي بنات الروم حزنا رقابها % % وحال الهوى بالشيب والهم فاسد % % 2(@)(@@) % تبكي عليهن البطاريق في الدجى % % وهن لدينا ملقيات كواسد % % 3(@)(@@) % أما والصبى إني أعف بفقده % % وإن ضجيع الجود مني لماجد % % PageV01P680 البحر : - 1(@)(@@) % تهن بشهر مضيء الليال % % بلغك الله اسعادها % % 2(@)(@@) % ترود بمغناك فيه العفاة % % وتلقى العدى منك أنكادها % % 3(@)(@@) % فهذي تفطر افواهها % % وهذي تفطر أكبادها % % PageV01P681 البحر : - 1(@)(@@) % سر على اليمن والهنا حيثما سر % % ت ليلقاك فيه وجه سعيد % % 2(@)(@@) % أنت نعم المأمون للملك تحمي % % سرجه كاتبا ونعم الرشيد % % 3(@)(@@) % ان يكن بيتك الطويل فخارا % إن بيت الثنا عليك مديد % % PageV01P682 البحر : - 1(@)(@@) % إليك أخا العلياء دعوة لائذ % بمعروفك المعروف قد راح واغتدى % % 2(@)(@@) % نباتي حمد ذا بنين وذا أب % % جميعا يرجى من أياديك موعدا % % 3(@)(@@) % فقل في نبات أصله وفروعه % % مواثل ترجو من سحائبك الندى % % PageV01P683 البحر : - 1(@)(@@) % قد آثر القوم من بيروت همهم % وضاعفت سكراتي وقفة النقد 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms138# % % 2(@)(@@) % لي سكرتان وللندمان واحدة % % شيء خصصت به من دونهم وحدي % % 3(@)(@@) % الغوث يا من اليه قد مددت يدي % % ثم اقتدحت فاورى بالثنا زندي % % PageV01P684 البحر : - 1(@)(@@) % هنئت بالصوم السعي % % د وألف صوم بعده % % 2(@)(@@) % في نعمة وسيادة % % تسع الولي وضده % % 3(@)(@@) % هذا يفطر فاه أو % % هذا يفطر كبده % % PageV01P685 البحر : - 1(@)(@@) % شكر الله أياديك التي % % كل يوم أتلقى رفدها % % 2(@)(@@) % سر أولادي حتى أمهم % % مثلما سر أبوهم بعدها % % 3(@)(@@) % و أقيمت عندها الحرمة بل % % قام مني كل شيء عندها % % PageV01P686 البحر : - 1(@)(@@) % صديقي بل سيدي لا برحت % % مفيد الصداقة وافى السياده % % 2(@)(@@) % و لا زلت للجامع المجتبي % % تفتح للخير باب الزياده % % 3(@)(@@) % فمنك العمالة مشهودة % % بفعل الجميل ومنا الشهاده % % PageV01P687 البحر : - 1(@)(@@) % تكفل لي جود أندى الورى % % وشاع به الذكر في كل واد % % 2(@)(@@) % و والله ماخفت تغيير ما % % تعودت من بره المستفاد % % 3(@)(@@) % إذا غير الدهر حسن الذوات % % فحاشا محاسن ذات العماد % % PageV01P688 البحر : - 1(@)(@@) % لك الله ما أزكى وأشرف همة % % وأحمد صنعا حيث تتلى المحامد % % 2(@)(@@) % لعمري لقد خلدتها شرفية % % تضيء وتبقى حين تبلى الفراقد % % 3(@)(@@) % و أنت الذي قرت برؤيته العلى % % وهنئت الدنيا بأنك خالد % % PageV01P689 البحر : - 1(@)(@@) % لي في الأصادق خائن % % في المال مني والوداد % % 2(@)(@@) % فمتى أراه وخلفه % % عات من الأقوام عاد % % 3(@)(@@) % و نداؤه هذا جزا % فأقول قد صدق المنادي % % PageV01P690 البحر : - 1(@)(@@) % أيا ملكا من بعض أوصاف مجده % % كريم السجايا عادل الحكم زاهد % % 2(@)(@@) % تهن بعيد النحر وابق ممتعا % بأمثاله ما طاف بالبيت وافد % % 3(@)(@@) % تقلدنا فيه قلائد أنعم % % وفي النحر أولى ما تكون القلائد % % PageV01P691 البحر : - 1(@)(@@) % و أدهم رهوال بقرية أربد % % شلت له الأحمال بالرجل واليد % % 2(@)(@@) % و فارقته أبكي عليه حقيقة % % بكاء لبيد يوم فرقة أربد % % PageV01P692 البحر : - 1(@)(@@) % شكت وقد سارقتها قبلة % يا بردها في كبدي الواقده % % 2(@)(@@) % و قال قوم رشفة أغضبت % % فقلت هذي غضبة بارده % % PageV01P693 البحر : - 1(@)(@@) % نبي الهدى في موقف الحشر شافعي % % وهذا الأمير اليوم في العام منجد % % 2(@)(@@) % فيافوز آمالي وفوزي إذا غدا % % شفيعي في هذا وهذا محمد % % PageV01P694 البحر : - 1(@)(@@) % ياذا الندى السعدي دمت مهنئا % ببسيط مدح كامل ومديد % % 2(@)(@@) % جمع اهتمامك في صحابة مصرنا % % تذكار سعد صحابة وسعيد % % PageV01P695 البحر : - 1(@)(@@) % يا دولة الحسن كم 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms139# بدا بشر % منعم القلب فيك والجسد % % 2(@)(@@) % و عادل القد في تعانقنا % % يجمع بين الغزال والأسد % % PageV01P696 البحر : - 1(@)(@@) % و الله ما عجبي لقدرك انه % % قدر على باغي مداه بعيد % % 2(@)(@@) % الا لكونك لست تشكو وحشة % % في هذه الدنيا وأنت وحيد % % PageV01P697 البحر : - 1(@)(@@) % رعى الله من جاورت في مصر بابه % % فقابلني بالمال والجاه والود % 2(@)(@@) % هو العلم الفرد الذي شاع فضله % فبشراكم يا جيرة العلم الفرد % % PageV01P698 البحر : - 1(@)(@@) % فديتك سيفي اللواحظ كاتبا % ومثلك من يفدى ومثلي من يفدي % % 2(@)(@@) % بنانك بالقبطي في اللوح كاتب % ولحظك في الأكباد يكتب بالهندي % % PageV01P699 البحر : - 1(@)(@@) % قالوا ذقون الملاح باردة % % منكرات قلت اهدر وانكدي % % 2(@)(@@) % يا حر قلبي إذ لا يقبلها % % فمي ويا بردها على كبدي % % PageV01P700 البحر : - 1(@)(@@) % رب أديب رأى كتابا % فقال ماذا المليح عندك % % 2(@)(@@) % فقلت في الحال يا كتابي % % غيب والا سلخت جلدك % % PageV01P701 البحر : - 1(@)(@@) % يقول الامام الفاضل ابن دريهم % % عدمنا على المعلوم خلا مساعدا % % 2(@)(@@) % بديوان عشر الشام هل بالتقى أخ % % فقلت ولا تلقى من العشر واحدا % % PageV01P702 البحر : - 1(@)(@@) % عش تهنا بك أعياد لها % % بحمى السعد العمادي اعتماد % % 2(@)(@@) % يا رئيسا يقسم الساري له % % ما يرى أرفع من ذات العماد % % PageV01P703 البحر : - 1(@)(@@) % شيخ النقا والهنا بهاه % % رونقه دائما جديد % % 2(@)(@@) % العلم والزهد والعطايا % % فكلنا طالب مريد % % PageV01P704 البحر : - 1(@)(@@) % أنساني الهم حتى % % عادات بر الرشيد % % 2(@)(@@) % لا زال بين عتيق % من عيده وجديد % % PageV01P705 البحر : - 1(@)(@@) % رويت بالمنهل السعدي بعد ظما % % أضنى من الحال معدومي وموجودي % % 2(@)(@@) % حتى يغني الرجا بشراك يا ظمإي % % سعد السعود ومجري الماء في العود % % PageV01P706 البحر : - 1(@)(@@) % هيهات بين ذوي الهوى لا يستوي % % دمعي ودمعك أيها المتواجد % % 2(@)(@@) % فحديث دمعي عن تلهب مهجتي % % ذاكي اللظى وحديث دمعك بارد % % PageV01P707 البحر : - 1(@)(@@) % هنئت يا ملك السماحة والندى % % شهرا يزورك بالهنا معتادا % % 2(@)(@@) % تسدي به مننا وتكبت حسدا % % فتفطر الأفواه والأكبادا % % PageV01P708 البحر : - 1(@)(@@) % يفديك من لك في حشاه مودة % فإذن أجل العالمين لك الفدى % % 2(@)(@@) % و عداك أرضى أن تعيش فإنها % % ببقاك في عيش أمر من الردى % % PageV01P709 البحر : - 1(@)(@@) % فديت من آل أيوب لنا ملكا % سار عن الشيم العليا على جدد % % 2(@)(@@) % حدثت عن فضله ثم استندت له % % فلا عدمت أسانيدي ولا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms140# سندي % % PageV01P710 البحر : - 1(@)(@@) % رعى الله بحرا فوق أرجا بحيرة % تكاد تحاكي بسط يمناه بالندى % % 2(@)(@@) % و تبدو إذا هب النسيم كمبرد % % فلا غرو أن تجلي عن المهج الصدا % % PageV01P711 البحر : - 1(@)(@@) % ألا ليت شعري هل أفوز بحافظ % لي الود من هذا البريد المردد % % 2(@)(@@) % فيرفع أخبار السلام لمالك % ويسمعني في الرد مسند أحمد % % PageV01P712 البحر : - 1(@)(@@) % لله تصنيف له رونق % كرونق الحبات في عقدها % % 2(@)(@@) % كادت تصانيف الورى عنده % % تموت للهيبة في جلدها % % PageV01P713 البحر : - 1(@)(@@) % تدانيت من عمرو فلما صرفته % % بنعماك أضحى عمرو نحوي راصدا % % 2(@)(@@) % و ما ضرني دين وفعلك سالم % يصرف لي زيدا وعمرا وخالدا % % PageV01P714 البحر : - 1(@)(@@) % لم أنس موقفنا بكاظمة % والعيش مثل الدار مسود % 2(@)(@@) % والدمع ينشد في مسائله % % هل بالطلول لسائل رد % PageV01P715 البحر : - 1(@)(@@) % قد لقبوا الراح بالعجوز وما % % تخرج ألقابهم عن العاده % % 2(@)(@@) % ألا نت الغادة التي امتنعت % % فصح أن العجوز قواده % % PageV01P716 البحر : - 1(@)(@@) % وردت على الباب الجمالي قاصدا % فجاد ولاقى مقصدي بأياد % % 2(@)(@@) % و لي فرس قد بات ضيفا لطرفه % % فبات كلانا وهو بيت جواد % % PageV01P717 البحر : - 1(@)(@@) % مرضت فعادني أزكى البرايا % % وأغنى عن مراض الود حادوا % % 2(@)(@@) % رأوا أني إلى الأجداث ماض % % فقالوا كل ماض لا يعاد % % PageV01P718 البحر : - 1(@)(@@) % يا سيدي ذكر بحالي صاحبا % تدري كما يدرى طريق السؤدد % % 2(@)(@@) % فما أظن حال عبد مخلص % % يضيع بين صاحب وسيد % % PageV01P719 البحر : - 1(@)(@@) % نجوم حسن أكراد أرضكم % % قد مات فيها المحب أوكادا % % 2(@)(@@) % فيالها عشقة دهيت بها % % حتى رأيت النجوم أكرادا % % PageV01P720 البحر : - 1(@)(@@) % يا ابن الأئمة كابرا عن كابر % دارك ببيت الظاهرية فاقدا % % 2(@)(@@) % لي ألف بيت في مدائح بيتكم % % فاردد على المملوك بيتا واحدا % % PageV01P721 البحر : - 1(@)(@@) % لا تذكروا معن بن زائدة لدى % % قاضي القضاة ولا لهاه الجائده % % 2(@)(@@) % كم قد رأينا من معاني فضله % % جدوى يديه في معان زائده % % PageV01P722 البحر : - 1(@)(@@) % و لما بعثت المال عفوا مهنا % تزيد هذا الشعر حسنا مجددا % % 2(@)(@@) % و ما الشعر الا روضة راق حسنها % % ولا سيما ان كان قد وقع الندى % % PageV01P723 البحر : - 1(@)(@@) % سألت النقا والبان أن يحكيا لنا % % روادف أو أعطاف من زاد صدها % % 2(@)(@@) % فقال كثيب الرمل ما أنا حملها % % وقال قضيب البان ما أنا قدها % % PageV01P724 البحر 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms141# : - 1(@)(@@) % نظرت وقد قام الخطيب وراقني % % على درج بدر العلى وهو صاعد % % 2(@)(@@) % و لما رأيت الناس دون محله % % تيقنت أن الدهر للناس ناقد % % PageV01P725 البحر : - 1(@)(@@) % يا رب أسألك الغنى عن معشر % غضبوا وكافوا بالجفاء ترددي % % 2(@)(@@) % قالوا كرهنا منه مد لسانه % % والله ما كرهوا سوى مد اليد % % PageV01P726 البحر : - 1(@)(@@) % رعى الله للعلياء قطب سيادة % يدور عليه كل علم وسؤدد % % 2(@)(@@) % متى جئت موسى شائما نار ذهنه % % تجد خير نار عندها خير موقد % % PageV01P727 البحر : - 1(@)(@@) % أولاد مولانا بهم % % تزهو المحافل والمشاهد % % 2(@)(@@) % مثل السيوف مهيبة % لكن لسيف الله خالد % % PageV01P728 البحر : - 1(@)(@@) % رشا بالصالحية سفح عيني % % سريع في محبته مديد % % 2(@)(@@) % له قلب ولي دمع عليه % % فهذا قاسيون وذا يزيد % % PageV01P729 البحر : - 1(@)(@@) % يا أميرا زادت يداه لعاف % وأجادت يوم الحروب جهادا % % 2(@)(@@) % صدق القائلون في كل وقت % % لا يكون الجواد إلا جوادا % % PageV01P730 البحر : - 1(@)(@@) % ما ضر احسانك يا سيدي % % لو حاد في أمري عن الاقتصاد % % 2(@)(@@) % يا عين آمالي إذا استجمعت % % اني إلى مورد لقياك صاد % % PageV01P731 البحر : - 1(@)(@@) % صديقي من قديم إن فكرتي % % بما أبديت لي فكر جديد % % 2(@)(@@) % و عدت بيسرتي فازددت عسرا % % فلا أدري أوعد أو وعيد % % PageV01P732 البحر : - 1(@)(@@) % قل لوزير الشآم يامن % % مد يد الجود للعباد % % 2(@)(@@) % ماسرق المادحون وصفا % فيك فلا تقطع الأيادي % % PageV01P733 البحر : - 1(@)(@@) % مليك بدا في أحمر من ملابس % % كذاك بدت من حوله الخيل والجند % % 2(@)(@@) % بدوا كلهم في حلة الورد ملبسا % فقال الورى هذا هو الأسد الورد % % PageV01P734 البحر : - 1(@)(@@) % قالوا أضاءت سماء الشام قلت لهم % % بدر التقى والعلى والجود موجود % % 2(@)(@@) % و للسعادة معنى شاهد ابدا % بأن طالع أفق الشام مسعود % % PageV01P735 البحر : - 1(@)(@@) % عليك بساحة الملك المرجى % % اذا خفت الجوائح والاعادي % % 2(@)(@@) % تجد أندى يد وخيول حرب % فما ينفك يروي عن جواد % % PageV01P736 البحر : - 1(@)(@@) % و شاهد أعجبني حسنه % % وكنت في آخر كالواحد % % 2(@)(@@) % فحار في هذا وذا خاطري مولاي لا هدت اللياليكثيب علياكم عمادا ولا طلبنا ربيع بر وكان جودكم جمادى % % وقلت بالغائب والشاهدسقط بيتين ص % % PageV01P737 البحر : - 1(@)(@@) % روت عنك أخبار المعالي محاسن % % كفت بلسان الحال عن ألسن الحمد % % 2(@)(@@) % فوجهك عن بشر وكفك عن عطا % % وخلقك عن سعد ورأيك عن سعد 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms142# % % PageV01P738 البحر : - 1(@)(@@) % كم قلت باللثم وبرد اللمى % % إيه برغم العاذل الحاسد % % 2(@)(@@) % رو صدى قلبي ودع عذلي % % في الحب تغتاظ على البارد % % PageV01P739 البحر : - 1(@)(@@) % قال لي إذ رأى انكساري حبيبي % % ما الذي قد دعا لهذي العياده % % 2(@)(@@) % قلت زادوا رفاق شغلي دوني % % قال أخشى عليك من ذي الزياده % % PageV01P740 البحر : - 1(@)(@@) % أيا سائلي عن مذهب العتب والولا % % لأهل زمان انه لشديد % % 2(@)(@@) % أوالي عليا خلد الله مجده % % وأشكو أذى عثمان وهو يزيد % % PageV01P741 البحر : - 1(@)(@@) % لما رأيت نهودها قد أقبلت % % ورأت لوجهي عشقة تتجدد % % 2(@)(@@) % قالت وقد رأت اصفراري من به % % وتنهدت فأجبتها المتنهد % % PageV01P742 البحر : - 1(@)(@@) % جنيت بالتقبيل من خده % % وردا وعاتبت على الصد % % 2(@)(@@) % فافتر من عجب وقال انظروا % % لعاشق يجني ويستعدي % % PageV01P743 البحر : - 1(@)(@@) % أهدي إلى القرم الشريف هدية % % عبد يود مكانها من خده % % 2(@)(@@) % ماعد مذ ملكت يمينك رقه % % عيبا عليه فلا سبيل لرده % % PageV01P744 البحر : - 1(@)(@@) % قالت لي النفس اذا أهديت نحوكم % % جديا حكى القطعة العلياء من كبدي % % 2(@)(@@) % أرسله مع تاجر الكتب الفلاني وقل % % هذا أخي حين أدعوه وذا ولدي % % PageV01P745 البحر : - 1(@)(@@) % أهيف ذو خصر وردف فكم % % في غوره أصبو وفي نجده % % 2(@)(@@) % ياليته لي بالجفا موعدا % فانه يكذب في وعده % % PageV01P746 البحر : - 1(@)(@@) % يالهف قلبي على لقاء رشاء % شيب مني الفؤاد والفودا % % 2(@)(@@) % لي مقلة منه قد جننت بها % % وهكذا حال من به سودا % % PageV01P747 البحر : - 1(@)(@@) % يا مجزل الرفد للنزيل به % % جائزة جمة وزواده % % 2(@)(@@) % منحتي المال صبحة فعسى % % تكون يا أكرم الورى عاده % % PageV01P748 البحر : - 1(@)(@@) % قاضي القضاة المرتجى دمت ذا % % نعماه للصادر والوارد % % 2(@)(@@) % بعض الورى يطلبني شاهدا % مع أنه ذو ورع زائد % % 3(@)(@@) % فاعجب له من ورع ناسك % من مثلي بالشاهد % % PageV01P749 البحر : - 1(@)(@@) % أهلا بها بيضاء عاطرة اذا % % وصلت ينم بها شذاها والشذى % % 2(@)(@@) % سحارة الجفن الكحيل اذا رنت % % عقدت لسان معوذ ان عوذا % % 3(@)(@@) % تلك التي حكمت سهام لحاظها % % حكما تأمله الجمال فنفذا % % 4(@)(@@) % تجري الدماء وسيفها في جفنه % % نظرا وليس السحر الا هكذا % % 5(@)(@@) % آها لرشق سهامها في هدبها % % و السهم أبعد ما يكون معذذا % % 6(@)(@@) % و لحاجبين اذا تعرض ناظر % % متأمل قالت لقوسيها خذا % % 7(@)(@@) % ولذلك الخد الخليلي اللظى % % لو ينتحي الصنم الأصم لجذذا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms143# % % 8(@)(@@) % قالت اذا غمضت جفونك فارتقب % % طيفي فقلت لها نعم لكن اذا % % 9(@)(@@) % و سمعت عن سيف ورمح قبلها % % حتى انثنت ورنت فقلت هما اللذا % % 10(@)(@@) % عشقي كمدح جمال دين الله لا % % ينفك مشتغل الضمير بذا وذا % % PageV01P750 11(@)(@@) % المرتقي درجات مجد جل أن % % يجذو سواه وجل عن أن يحتذى % % 12(@)(@@) % مترفع الأوصاف عن مدح الورى % % فكأنما قول المديح له بذا % % 13(@)(@@) % جزل الندى والبأس لو لمس الصفا % % لجرى ولو لمس الحديد لفلذا % % 14(@)(@@) % عرف الحيا كفيه لما أخجلا % % بالبرق وجنته وقال هما اللذا % % 15(@)(@@) % عال على شرف النجوم كأنما % % قدم الثريا في القياس له حذا % % 16(@)(@@) % وجد الأنام على قريحته هدى % % فرأوا ليوسف نار موسى تحتذى % % 17(@)(@@) % كم مقتر عان يلذذ أمره % % وافى إلى أبوابه فتلذذا % % 18(@)(@@) % و معاود منه اقتباس فوائد % لو شامها الاعشى الكبير تتلمذا % % 19(@)(@@) % يمم حماه تجد سحابا مشبما % يهنى الندى وتلطفا متبغذذا % % 20(@)(@@) % و أناملا خلقت لضم يراعة % تجري ببسط الرزق أو كف الاذى % % PageV01P751 21(@)(@@) % و فضائلا فخرت على كأس الطلا % في الذوق فهي خليقة أن تنبذا % % 22(@)(@@) % كم من معاني مشرق في لفظه % % راحت فلا كدر يشين ولا قذى % % 23(@)(@@) % كالنجم في صافي الغدير تظنه % % أدنى منالا وهو أبعد مأخذا % % 24(@)(@@) % ياآل حماد الكرام بذكركم % % نعش الزمان كأن ذكركمو غذا % % 25(@)(@@) % أما الزمان بكم فأفصح إذ رجا % % نطقا وأما بالأنام فقد هذا % % 26(@)(@@) % خلفتم للمكرمات ممدحا % أعدى على رتب الزمان وانفذا % % 27(@)(@@) % لله أنت لقد أجرت حشاي من % % هم تحكم أمره واستحوذا % % 28(@)(@@) % جان علي اذا اجتهدت كواقع % % في الفخ زاد عناه حين تجبذا % % 29(@)(@@) % حتى لجأت إلى جنابك شاكيا % فأجرت من ألقى الرجا وتعوذا % % 30(@)(@@) % كرما كما نبع الزلال ومرحبا % وهدى كما لمع الصباح فحبذا % % PageV01P752 31(@)(@@) % الغيث أنت وأنت أكرم ديمة % والسهم أنت وأنت أسرع منفذا % % PageV01P753 البحر : - 1(@)(@@) % لي رفقة تعجب إقبالهم % % حوارنا يصقل أفخاذا % % 2(@)(@@) % عادوا ببطيخ وقرع لهم % % وعدت لا هذا ولا هذا % % 3(@)(@@) % قد نبذوا الانصاف فاعجب لمن % % غدا بشهر الصوم نباذا % % PageV01P754 البحر : - 1(@)(@@) % بعثت لكم يا سادة أنا عبدهم % % قليلا من المن الذي طاب مأخذا % % 2(@)(@@) % فلا تقرنوه بالخليلي آكلا % فحاشكم أن تقرنوا المن بالأذى % % PageV01P755 البحر : - 1(@)(@@) % لما رأى 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms144# الظبي طرف حبي % % شكا إلى الحسن واستعاذا % % 2(@)(@@) % وقال جفن له سقيم % ياليتني مت قبل هذا % % PageV01P756 البحر : - 1(@)(@@) % مولاي دعوة معجب % يدعى به متلذذ % % 2(@)(@@) % أنا كالذي هو قائل % في شعره أنا كالذي % % PageV01P757 البحر : - 1(@)(@@) % أفدي غزالا من الأتراك مقلته % % في صنعة السحر أعيت كل أستاذ % % 2(@)(@@) % نباذ عهد بذاك اللحظ يسحرني % % يا حسرتي بين سحار ونباذ % % 3(@)(@@) % كأن الفاظ فخر الدين منه حوت % % مدام ساق عليها سحر نفاذ % % 4(@)(@@) % ذو النظم والنثر كم قالت حلاوة ذا % % وذا لعمرك ماذي حاجة الماذي % % 5(@)(@@) % والفضل في الناس كم لذت له شيم % وكم عطفت على لهفان لواذ % % 6(@)(@@) % يا كاتبا خلت أقلاما بمهرقه % % عقائلا رقمت طرزا على لاذ % % 7(@)(@@) % تهنها نعم الوهاب قائلة % ياعيده اهنأ بهذي واقمع الهاذي % % PageV01P758 البحر : - 1(@)(@@) % قالت إشارة فاتك لمروع % قل لي لمن يستنجد المنبوذ % % 2(@)(@@) % ما أنت الا في الحصار معي فلا % % تتعب فكل محاصر مأخوذ % % 3(@)(@@) % فأجابها بالله ثم رسوله % يستنجد المنبوذ حين يلوذ % % 4(@)(@@) % هي نقطة تروى فعند نفوذها % % تحتال إذ عند الرجاء نفوذ % % PageV01P759 البحر : - 1(@)(@@) % كذا أبدا تلقى الأهلة طالعا % عليك بأنوار السعود فحبذا % % 2(@)(@@) % ويصنع فينا الجود صفوا مهنئا % ولا حظرا فيه عليك ولا قذى % % 3(@)(@@) % ومهما وضعت المن في مستحقه % % فوالله ما مدت اليك يد الأذى % % PageV01P760 البحر : - 1(@)(@@) % بروحي معسول اللمى متحجب % % إذا لم يزر لم يهن عيشي ولا إذا % % 2(@)(@@) % وان ذقت منا من حلاوة ريقه % % أتانا رقيب يتبع المن بالأذى % % PageV01P761 البحر : - 1(@)(@@) % أفدي بديع الجمال محتكما % بناظر في القلوب نفاذ % % 2(@)(@@) % إذا تبينت ما صناعته % % رنا بلحظ وقال فولاذي % % PageV01P762 البحر : - 1(@)(@@) % لسقيا لمشمش بستانكم % % فنعم الشراب ونعم الغذا % % 2(@)(@@) % وأعجب كل فتى حبه % % فقال الفتى حبذا حب ذا % % PageV01P763 البحر : - 1(@)(@@) % يا سيدا مازال لي من منه % % نعم الحلاوة والعشا ثم الغذا % % 2(@)(@@) % منا بعثت اليك إلا أنه % من من بالتقبيل يتبعه أذى % % PageV01P764 البحر : - 1(@)(@@) % صحا القلب لولا نسمة تتخطر % % ولمعة برق بالغضا تتسعر % % 2(@)(@@) % وذكر جبين البابلية إذ بدا % % هلال الدجى والشيء بالشيء يذكر % % 3(@)(@@) % سقى الله أكناف الغضا سائل الحيا % % وإن كنت أسقى أدمعا تتحدر % % 4(@)(@@) % وعيشا نضا عنه الزمان بياضه % % وخلفه في الرأس يزهو ويزهر % % 5(@)(@@) % تغير ذاك 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms145# اللون مع من أحبه % % ومن ذا الذي يا عز لا يتغير % % 6(@)(@@) % و كان الصبي ليلا وكنت كحالم % فيا أسفي والشيب كالصبح يسفر % % 7(@)(@@) % يعللني تحت العمامة كتمه % % فيعتاد قلبي حسرة حين أحسر % % 8(@)(@@) % و ينكرني ليلي وما خلت أنه % % إذا وضع المرء العمامة ينكر % % 9(@)(@@) % ألا في سبيل الله صوم عن الصبي % % وقلب على عهد الحسان مفطر % % 10(@)(@@) % تذكرت أوطان الوصال فأشهب % من الدمع في ميدان خدي وأحمر % % PageV01P765 11(@)(@@) % إذا لم تفض عيني العقيق فلا رأت % % منازله بالوصل تبهى وتبهر % % 12(@)(@@) % و إن لم تواصل غادة السفح مقلتي % % فلا عادها عيش بمغناه أخضر % % 13(@)(@@) % ليالي تجني الحسن في أوجه الدمى % % وتجني على أجسامها حين تنظر % % 14(@)(@@) % يؤثر في خد المليحة لحظها % % وإن كان في ميثاقها لا يؤثر % % 15(@)(@@) % رأيت الصبي مما يكفر للفتى % % ذنوبا اذا كان المشيب يكفر % % 16(@)(@@) % إذا حل مبيض المشيب بعارض % فما هو الا للمدامع ممطر % % 17(@)(@@) % كأني لم أتبع صبي وصبابة % % خليع عذار حيثما همت أعذر % % 18(@)(@@) % و لم أطرق الحي الخصيب زمانه % % يقابلني زهر لديه ومزهر % % 19(@)(@@) % و غيداء أما جفنها فمونث % % كليل وأما لحظها فمذكر % % 20(@)(@@) % يروقك جمع الحسن في لحظاتها % % على أنه بالجفن جمع مكسر % % PageV01P766 21(@)(@@) % من الغيد تحتف الظبا بحجابها % % ولكنها كالبدر في الماء يظهر % % 22(@)(@@) % يشف وراء المشرفية خدها % % كما شف من دون الزجاجة مسكر % % 23(@)(@@) % و لا عيب فيها غير سحر جفونها % % وأحبب بها سحارة حين تسحر % % 24(@)(@@) % إذا جردت من بردها فهي عبلة % وان جردت ألحاظها فهي عنبر % % 25(@)(@@) % إذا خطرت في الروض طاب كلاهما % % فلم يذر من أزهى وأشهى وأعطر % % 26(@)(@@) % خليلي كم روض نزلت فناءه % % وفيه ربيع للنزيل وجعفر % % 27(@)(@@) % و فارقته والطير صافرة به % % وكم مثلها فارقتها وهي تصفر % % 28(@)(@@) % إلى أعين بالماء نضاخة الصفا % % اذا سد منها مسخر جاش منخر % % 29(@)(@@) % نداماي من خود وراح وقينة % % ثلاث شخوص كاعبات ومعصر % % 30(@)(@@) % قضيت لبانات الشبيبة والهوى % % وطولت حتى آن أني أقصر % % PageV01P767 31(@)(@@) % و رب طموح العزم ادماء جسرة % % يظل بها عزمي على البيد يجسر % % 32(@)(@@) % طوت بذراعي وخدها شقة الفلا % % وكف الثريا في دجى الليل يشبر % % 33(@)(@@) % ومد جناحي ظلها آلق الضحى % % فشدت 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms146# كما شد النعام المنفر % % 34(@)(@@) % بصم الحصى ترمي الحداة كأنما % % تغار على محبوبها حين يذكر % % 35(@)(@@) % إذا ما حروف العيس خطت بقفرة % غدت موضع العنوان والعيس أسطر % % 36(@)(@@) % فلله حرف لاترام كأنها % % لوشك السرى حرف لدى البيد مضمر % % 37(@)(@@) % تخطت بنا أرض الشام إلى حمى % % به روضة ريا الجنان ومنبر % % 38(@)(@@) % إلى حرم الأمن المنيع جواره % % اذا ظلت الأصوات بالروع تجأر % % 39(@)(@@) % إلى من هو التبر الخلاص لناقد % غداة الثنا والصفوة المتخير % % 40(@)(@@) % نبي أتم الله صورة فخره % % وآدم في فخاره يتصور % % PageV01P768 41(@)(@@) % نظيم العلى والافق ما مد طرسه % % ولا الزهر الا والكواكب تنثر % % 42(@)(@@) % و لا لعصا الجوزاء في الشهب آية % % مجر الدجى من تحتها يتفجر % % 43(@)(@@) % نبي له مجد قديم وسؤدد % % صميم وأخبار تجل وتخبر % % 44(@)(@@) % تحزم جبريل لخدمة وحيه % % وأقبل عيسى بالبشارة يجهر % % 45(@)(@@) % فمن ذا يضاهيه وجبريل خادم % لمقدمه العالي وعيسى مبشر % % 46(@)(@@) % تهاوي لمأتاه النجوم كأنها % % تشافه بالخد الثري وتعفر % % 47(@)(@@) % و ينضب طام من بحيرة ساوة % % ولم لا وقد فاضت بكفيه أبحر % % 48(@)(@@) % نبي له الحوضان هذا أصابع % تفيض وهذا في القيامة كوثر % % 49(@)(@@) % و عن جاهه الناران هذي بفارس % % تبوخ وهذي في غد حين نحشر % % 50(@)(@@) % اذا ما تشفعنا به كف غيظها % % وقالت عبارات الصراط لنا اعبروا % % PageV01P769 51(@)(@@) % تنقل نورا بين أصلاب سادة % % فلله منه في سما الفضل نير % % 52(@)(@@) % به أيد الطهر الخليلي فانتحت % % يداه على الأصنام تغزو وتكسر % % 53(@)(@@) % و من أجله جيء الذبيحان بالفدى % % وصين دم بين الدماء مطهر % % 54(@)(@@) % وردت جيوش الفيل عن دار قومه % % فلله نصل قبل ما سل ينصر % % 55(@)(@@) % و لما أراد الله إظهار دينه % % بدا قمرا والشرك كالليل يكفر % % 56(@)(@@) % فجلى الدجى واستوثق الدين واضحا % وقام بنصر الله داع مظفر % % 57(@)(@@) % بخوف السطا بالرعب ينصر والظبا % % وداني الحيافي اليسر والعسر يهمر % % 58(@)(@@) % عزائم من لا يختشي يوم غزوه % % ردى وعطا من ليس للفقر يحذر % % 59(@)(@@) % علا عن محاكاة الغمام لفضله % % وكيف يحاكيه الخديم المسخر % % 60(@)(@@) % يظلله وقت المسير وتارة % % يشير اليه بالبنان فيمطر % % PageV01P770 61(@)(@@) % ألم تر أن القطر في الغيم فارس % اذا برزت آلاؤه يتقطر % % 62(@)(@@) % هو البحر فياض الموارد للورى % % ولكنه العذب الذي 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms147# لا يكدر % % 63(@)(@@) % فمن لي بلفظ جوهري قصائد % % تنظم حتى يمدح البحر جوهر % % 64(@)(@@) % و هيهات أن تحصى بتقدير مادح % مناقب في الذكر الحكيم تقرر % % 65(@)(@@) % اذا شعراء الذكر قامت بمدحه % % فما قدر ماتنشي الأنام وتشعر % % 66(@)(@@) % نبي زكا أصلا وفرعا واقبلت % % اليه أصول في الثرى تتجرر % % 67(@)(@@) % و خاطبه وحش المهامة آنسا % اليه وما عن ذلك الحسن منفر % % 68(@)(@@) % له راحة فيها على البأس والندى % % دلائل حتى في الجماد تؤثر % % 69(@)(@@) % فبينا العصا فيها وريق قضيبها % % اذا هو مشحوذ الغرارين أبتر % % 70(@)(@@) % كذا فليكن في شكرها وصفاتها % % يد بين أوصاف النبيين تشكر % % PageV01P771 71(@)(@@) % سخت ومحت شكوى قتادة فاغتدت % % بها العين تجري إذ بها العين تجبر % % 72(@)(@@) % لعمري لقد سارت صفات محمد % كذاك النجوم الزاهرات تسير % % 73(@)(@@) % أرى معجز الرسل انطوى بانطوائهم % % ومعجزه حتى القيامة ينشر % % 74(@)(@@) % كبير فخار الذكر في الخلق كلما % % تلا قارئ أو قيل الله أكبر % % 75(@)(@@) % هو المرتفي السبع الطباق إلى مدى % لجبريل عنه موقف متأخر % % 76(@)(@@) % هو الثابت العليا على كل مرسل % % بحيث له في حضرة القدس محضر % % 77(@)(@@) % هو المصطفى والمقتفى لا مناره % % يحط ولا أنواره تتكور % % 78(@)(@@) % إليك رسول الله مدت مطالبي % % على أنها أضحت على الغور تقصر % % 79(@)(@@) % خلقت شفيعا للانام مشفعا % فرجواك في الدارين أجدى وأجدر % % 80(@)(@@) % ولي حالتا دنيا وأخرى أراهما % % يمران بي في عيشة تتمرر % % PageV01P772 81(@)(@@) % حياة ولكن بين ذل وغربة % فلا العز يستجلي ولا البين يفتر % % 82(@)(@@) % و عزم إلى الأخرى يهم نهوضه % % ولكنه بالذنب كالظهر موقر % % 83(@)(@@) % تصبرت في هذا وذاك كأنني % % من العجز والبوسى قتيل مصبر % % 84(@)(@@) % و ها أنا ذا أبلغت عذري قاصدا % وأيقنت أن النجح لا يتعذر % % 85(@)(@@) % عليك صلاة الله في كل منزل % % تعبر عن سر الجنان وتعبر % % 86(@)(@@) % و آلك والصحب الذين عليهم % تحل حبا مدح ويعقد خنصر % % 87(@)(@@) % بجاهك عند الله أقبلت لائذا % فكثرت حاجاتي وجاهك أكثر % % 88(@)(@@) % و نظمت شعري فيك تزهى قصيدة % على كل ذي بيت من الشعر يعمر % % 89(@)(@@) % معظمة المعنى يكرر لفظها % % فيحلو نباتي الكلام المكرر % % 90(@)(@@) % دنت من صفات الفضل منك وانها % % لتفضل ما قالته طي وبحتر % % PageV01P773 91(@)(@@) % و ما ضرها اذ كان نشر نسيمها 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms148# % % رخآء اذا ما لم يكن فيه صرصر % % PageV01P774 البحر : - 1(@)(@@) % يوم صحو فاجعله لي يوم سكر % % وأدر لي كأسي رضاب وخمر % % 2(@)(@@) % واسقني في منازل مثل خلقي % % بيدي هاجر يغني بشعري % % 3(@)(@@) % حبذا روضة وظل ونهر % كعذار على لمى فوق ثغر % % 4(@)(@@) % ومليح يقول حسن حلاه % إعملوا ما أردتم أهل بدر % % 5(@)(@@) % جفن عينيه فاتر مستحي % انما خده المشعشع جمري % % 6(@)(@@) % و غرامي العذري ذنب لديه % % وعجيب يكون ذنبي عذري % % 7(@)(@@) % هاتها في يديه عذراء تجلى % % لنداماي في قلائد در % 8(@)(@@) % ليت شعري وللسرور انتهاز % أي شيء يعوقنا ليت شعري % % 9(@)(@@) % زمن الأنس قائم بالتهاني % % ونوال الملك المؤيد يسري % % 10(@)(@@) % ملك باهر المكارم يروي % % وجه لقياه عن عطاء وبشر % % PageV01P775 11(@)(@@) % زرت أبوابه فقرب شخصي % % ومحا عسرتي ونوه ذكري % % 12(@)(@@) % و نحا لي من المكارم نحوا % صانني عن لقاء زيد وعمرو % % 13(@)(@@) % و تفننت في مفاوضة الش % % كر إلى أن أعيي التطول شكري % % 14(@)(@@) % أريحي من الملوك أريب % فائض البحر ذو عجائب كثر % % 15(@)(@@) % رب خلق أرق من أدمع الخن % % سا وقلب يوم الوغى مثل صخر % % 16(@)(@@) % يقسم الدهر من سطاه بليل % % ومن المنظر البهي بفجر % % 17(@)(@@) % كل أيامنا مواسم فضل % في ذرى بابه وأعياد فطر % % 18(@)(@@) % فإذا لاح وجهه في ذوي القص % % د بعيد فاضت يداه بعشر % % 19(@)(@@) % لذ بيمناه في الحوائج تظفر % % بيسار يمحى به كل عسر % % 20(@)(@@) % سمه في الضمير إن ذقت فقرا % وعلي الضمان أنك تثري % % PageV01P776 21(@)(@@) % و القه للعلوم أو للعطايا % % تلق ملكا يقري الضيوف ويقري % % 22(@)(@@) % طوت العسر ثم فاضت لهاه % فنعمنا بذات طي ونشر % % 23(@)(@@) % يا مليك النوال والعلم لازل % % ت سري الثناء في كل قطر % % 24(@)(@@) % حملتك العلى شؤونا فألفت % % آل أيوب دائما آل صبر % % PageV01P777 البحر : - 1(@)(@@) % يا شاهر اللحظ حبي فيك مشهور % % وكاسر الطرف قلبي منك مكسور % % 2(@)(@@) % أمرت لحظك أن يسطو على كبدي % % يا صدق من قال ان السيف مأمور % % 3(@)(@@) % وجاوب الدمع ثغرا منك متسقا % فبيننا الدر منظوم ومنثور % % 4(@)(@@) % لا تجعل اسمي للعذال منتصبا % فما لتعريف وجدي فيك تنكير % % 5(@)(@@) % ولا توال أذى قلبي لتهدمه % % فانه منزل بالود معمور % % 6(@)(@@) % هل عند منظرك الشفاف جوهرة % % اني اليه فقير اللحظ مضرور 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms149# % % 7(@)(@@) % أو عند مبسمك الغرار بارقة % اني بموعد صبري فيه مغرور % % 8(@)(@@) % أقسمت بالعارض المسكي ان به % % للمقسمين كتاب الحسن مسطور % % 9(@)(@@) % وبالدموع التي تهمي الجفون بها % % فإ نها البحر في أحشائي مسجور % % 10(@)(@@) % لقد ثنى من يدي صبري عزائمه % % قلب بطرفك أمسى وهو مسحور % % PageV01P778 11(@)(@@) % وقد تغير عهد الحال من جسدي % % ومالحال عهودي فيك تغيير % % 12(@)(@@) % حبي ومدح ابن شاه شاه من قدم % % كلاهما في حديث الدهر مأثور % % 13(@)(@@) % أنشا المؤيد ألفاظي وأنشرها % % فحبذا منشأ منها ومنشور % % 14(@)(@@) % ملك اذا شمت برقا من أسرته % % علمت أن مراد القصد ممطور % % 15(@)(@@) % مكمل الذات زاكي الأصل طاهره % % فعنده الفضل مسموع ومنظور % % 16(@)(@@) % أقام للملك أراء معظمة % % لشهبها في بروج اليمن تسيير % % 17(@)(@@) % وقام عنه لسان الجود ينشدنا % % زوروا فما الظن فيه كالورى زور % % 18(@)(@@) % هذا الذي للثنا من نحو دولته % % وللجوائز مرفوع ومجرور % % 19(@)(@@) % وللعلوم تصانيف بدت فغدت % % نعم السوار على الاسلام والسور % % 20(@)(@@) % في كفه حمر أقلام وبيض ظبا % % كأنها لبرود المدح تشهير % % PageV01P779 21(@)(@@) % قد أثرت ما يسر الدين أحرفها % % وللحروف كما قد قيل تأثير % % 22(@)(@@) % لله من قلم صان الحمى وله % % مال على صفحات الحمد منثور % % 23(@)(@@) % وصارم في ظلام النقع تحسبه % % برقا يشق به في الأفق ديجور % % 24(@)(@@) % تفدي البرية ان قلوا وان كثروا % % أبا الفداء فثم الفضل والخير % % 25(@)(@@) % مدت إلى مجده الامداح واقتصرت % % فاعجب لممدود شيء وهو مقصور % % 26(@)(@@) % وسرها من أب وابن قد اجتمعا % % مؤيد يتلقاها ومنصور % % 27(@)(@@) % يا مالكا أشرقت أيامه وزهت % % رياضها فتجلى النور والنور % % 28(@)(@@) % هنئت عيدا له منك اعتياد هنا % % فالصبح مبتهج والليل مسرور % % 29(@)(@@) % فطرت فيه الورى واللفظ متفق % % للوفد فطر وللحساد تفطير % % 30(@)(@@) % كأن شكل هلال العيد في يده % % قوس على مهج الأضداد موتور % % PageV01P780 31(@)(@@) % أو مخلب مده نسر السماء لهم % % فكل طائر قلب منه مذعور % % 32(@)(@@) % أو منجل بحصاد القوم منعطف % % أو خنجر مرهف النصلين مطرور % % 33(@)(@@) % أو نعل تبرأجادت في هديته % % إلى جواد ابن أيوب المقادير % % 34(@)(@@) % أوراكع الظهرشكرا في الظلام على % % من فضله في السما والأرض مشكور % % 35(@)(@@) % أو حاجب أشمط ينبي بأن له % % عمرا له في ظلال الملك تعمير % % 36(@)(@@) % أو زورق جاء فيه العيد 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms150# منحدرا % حيث الدجى كعباب البحر مسجور % % 37(@)(@@) % أولا فقل شفة للكأس مائلة % % تذكر العيش إن العيش مذكور % % 38(@)(@@) % أولا فنصف سوار قام يطرحه % % كف الدجى حين عمته التباشير % % 39(@)(@@) % أولا فقطعة قيد فك عن بشر % % أخنى الصيام عليه فهو مأسور % % 40(@)(@@) % أولا فمن رمضان النون قد سقطت % % لما مضى وهو من شوال محصور % % PageV01P781 41(@)(@@) % فانعم به وبأمداح مشعشعة % % مديرها في صباح الفطر مبرور % % 42(@)(@@) % نفاحة المسك من مسود أحرفها % % ما كان يبلغها في مصر كافور % % 43(@)(@@) % قالت وما كذبت رؤيا محاسنها % % قبول غيري على الأملاك محظور % % 44(@)(@@) % بعض الورى شاعر فاسمع مدائحه % % وبعضهم مثلما قد قيل شعرور % % PageV01P782 البحر : - 1(@)(@@) % هن الوجوه الناضره % % عيني اليها ناظره % % 2(@)(@@) % آها لها عينا على % % تلك الأزاهر ماطره % % 3(@)(@@) % رقب الوشاة جفونها % % فاذا هم بالساهره % % 4(@)(@@) % من لي بغزلان على % % سفح المخصب نافره % % 5(@)(@@) % ومعاطف مثل الغصو % % ن سبت حشاي الطائره % % 6(@)(@@) % ياصاح علل مهجتي % % بسنا الكؤوس الدائره % % 7(@)(@@) % واحرق بلمع شعاعها % % هذي الليالي الكافره % % 8(@)(@@) % وانظر لساعات النها % % ر بجنح ليل سائره % % 9(@)(@@) % من كف مهضوم الحشا % % مثل المهاة الحادره % % 10(@)(@@) % رامي النواظر والقلو % % ب بهاجر وبهاجره % % PageV01P783 11(@)(@@) % ذي مقلة تلقى الضرا % % غم بالجفون الكاسره % % 12(@)(@@) % تردي وأنت تحبها % % وكذا تكون الساحره % % 13(@)(@@) % أحيت وأردت بالفتو % % ر وباللحاظ الشاطره % % 14(@)(@@) % كيد المؤيد باليرا % % ع وبالسيوف الباتره % % 15(@)(@@) % ذات الحروف مجيرة % % وظبا الأسنة جائره % % 16(@)(@@) % أكرم بصنع يد لها % % هذي الايادي الفاخره % % 17(@)(@@) % محمرة الآفاق في % % يوم الندى والنائره % % 18(@)(@@) % فشعاع تبر صاعد % % ودماء قوم مائره % % 19(@)(@@) % و تبسم مع ذا وذا % % يزع الخطوب الكاشره % % 20(@)(@@) % و تفنن في العلم يق % % دح بين ذاك خواطره % % PageV01P784 21(@)(@@) % لا يهمل الدنيا ولا % % ينسى حقوق الآخره % % 22(@)(@@) % عن كفه أو صدره % % تروي البحار الزاخره % % 23(@)(@@) % ياأيها الملك الذي % % رد الحقائب شاكره % % 24(@)(@@) % و سما بهمته على % % غرر النجوم الزاهره % % 25(@)(@@) % حتى انتقى من زهرها % % هذي الخلال الباهره % % 26(@)(@@) % سقيا لدهرك إنه % % دهر الأيادي الوافره % % 27(@)(@@) % مترادف لذوي الرجا % % بهباته المتواتره % % 28(@)(@@) % لولاك ماأمست قري % % حتي الكليلة شاعره % % 29(@)(@@) % أنت الذي روت غما % % ئمه رباي العاطره % % 30(@)(@@) % و أبحتني بحر الندى % % حتى نظمت جواهره % % PageV01P785 31(@)(@@) % لاغرو إن سليت عن % % بلدي حشاي الذاكره % % 32(@)(@@) % فلقد وجدت ديار مل % % كك بالسعادة 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms151# عامره % % 33(@)(@@) % قهرت حماة لي العدى % % فحماة عندي القاهره % % PageV01P786 البحر : - 1(@)(@@) % مبلبل الأصداغ والطره % % ومرسل اللحظ على فتره % % 2(@)(@@) % أرخى على أعطافه شعرة % % قد جذبتني فيه للحسرة % % 3(@)(@@) % فاعجب لمن جار عليه الضنى % % حتى غدا تجذبه شعره % % 4(@)(@@) % واحربا من رشإ خاذل % مالي على عشقته نصره % % 5(@)(@@) % مهفهف تعرف من جفنه % % علامة التأنيث بالكسرة % % 6(@)(@@) % ذو طاعة تعلو على المشتري % % وغرة تزهو على الزهرة % % 7(@)(@@) % ومقلة دعجاء ضاقت فما % % تشبع من يقنع بالنظره % % 8(@)(@@) % عشقته حلوا على مثله % % يطاع في الغي أبو مره % % 9(@)(@@) % لولا دجى طرته لم أبت % % سهران لا أجر ولا أجره % % 10(@)(@@) % يبدو كتاب الحسن في وجهه % % فاقرأ العشق من الطره % % PageV01P787 11(@)(@@) % ياابن أمير الحرب يوم الوغى % % كم لك في العشاق من إمره % % 12(@)(@@) % اليك يشكو المرء أشجانه % % ولابن شاد يشتكي دهره % % 13(@)(@@) % الملك العالم والضيغم ال % % باسل والمفرد والندره % % 14(@)(@@) % رب العطايا عن غنى قاصر % والحلم كل الحلم عن قدره % % 15(@)(@@) % سبحان من صوره خالصا % ما شيب من أخلاقه ذره % % 16(@)(@@) % من آل مروان ويمناه في % % حب العطايا من بني عذره % % 17(@)(@@) % لو لم تكن يمناه غيثا لما % % أضحت ربى الطرس بها نضره % % 18(@)(@@) % حروفها تعطف يسر الفتى % % فهي حروف العطف لليسرة % % 19(@)(@@) % وسيفها ممتزج بالدما % % مزج بياض الخد بالحمره % % 20(@)(@@) % إذا مضى في الدرع إفرنده % % عجبت للمريخ في النثره % % PageV01P788 21(@)(@@) % أكرم باسماعيل من شائد % % أركان بيت الملك عن خبره % % 22(@)(@@) % ذي السلم لا تعبأ له ديمة % والحرب لا يصلى له جمره % % 23(@)(@@) % معطي جواد الخيل للمعتفي % % وخلفه الصرة كالمهرة % % 24(@)(@@) % دع حاتما يفخر في قومه % % بنحره البكرة لا البدره % % 25(@)(@@) % ليسوا سواء المجد إلا اذا % % تساوت الخزفة والدره % % 26(@)(@@) % هو الذي يروي حديث الثنا % % عن شخصه الباهر عن قره % % 27(@)(@@) % للخلق والخلق على وجهه % % نوران ردا ناظر الامره % % 28(@)(@@) % ان كان النورين فضلا فكم % % جهز من جيش ذوي العسره % % 29(@)(@@) % يا ملكا يلقى المنى والعدى % % بضعف ما ترضى وما تكره % % 30(@)(@@) % و قرتني عن أهل ودي فلا % % والله مالي فيهم فكره % % PageV01P789 31(@)(@@) % إلى أياديك انتهى مطلبي % % فيا لها فيحآء مخضره % % 32(@)(@@) % كذا مدي الأيام في نعمة % باسمة الإخوان مفتره % % 33(@)(@@) % في كل وجه قد تيممته % % سعادة واضحة الغره % % PageV01P790 البحر 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms152# : - 1(@)(@@) % صيرت نومي مثل عطفك نافرا % % وتركت عزمي مثل جفنك فاترا % % 2(@)(@@) % وسكنت قلبا طار فيك مسرة % أرأيت وكرا قط أصبح طائرا % % 3(@)(@@) % يا مخربا ربع السلو جعلتني % % أدعى بأنساب الصبابة عامرا % % 4(@)(@@) % ويطيع قلبي حكم لحظك في الهوى % % ياللكليم غدا يطيع الساحرا % % 5(@)(@@) % رفقا بقلب في الصبابة والأسى % % صيرته مثلا فأصبح سائرا % % 6(@)(@@) % ومسهد يشكو القتار دموعه % % مما سلكن على هواك محاجرا % % 7(@)(@@) % ما بال مقلتك الضعيفة لم تزل % % وسنا وطرفي ليس يبرح ساهرا % % 8(@)(@@) % خلقت بلا شك لأخلاق الأسى % % ويد المؤيد للنوال بلا مرا % % 9(@)(@@) % من مبلغ الملك المؤيد أنني % % لولاه ما سميت نفسي شاعرا % % 10(@)(@@) % وحلفت لم أمدح سواه لرغبة % لكنني جربت فيه الخاطرا % % PageV01P791 11(@)(@@) % ملك ابن أيوب الثناء بنائل % أضحى على حمل المغارم صابرا % % 12(@)(@@) % وتملكته سماحة وحماسة % جعلا له في كل ناد ذاكرا % % 13(@)(@@) % وإذا سخا ملأ الديار عوارفا % وإذا غزا ملأ القفار عساكرا % % 14(@)(@@) % وإذا سطا جعل الحديد قلائدا % وإذا عفى جعل الحديد جواهرا % % 15(@)(@@) % بينا الأسير لديه راكب أدهم % حتى غدا بالعفو أدهم ضامرا % % 16(@)(@@) % تمحو ظلام الليل بيض سيوفه % % مذ قيل إن الليل يسمى كافرا % % 17(@)(@@) % و تتابع المنن التي ما عيبها % % إلا رجوع الوصف عنها قاصرا % % 18(@)(@@) % يا ابن الملوك المالئين فجاجها % % مدحا منظمة الحلى ومآثرا % % 19(@)(@@) % من كل ذي عرض يصفى جوهرا % فاعجب لإعراض تكون جواهرا % % 20(@)(@@) % شكرا لشخصك ما أسير ممدحا % وأعز منتصرا وأحلم قادرا % % PageV01P792 21(@)(@@) % حملتني النعمى إلى أن لم أبن % % من تغلبن أشاكيا أم شاكرا % % 22(@)(@@) % و نعم شكرت مواهبا لك حلوة % % حتى شققت من العداة مرائرا % % 23(@)(@@) % لا غرو ان عمر البيوت معانيا % عاف عمرت له البيوت ذخائرا % % 24(@)(@@) % بكرت عليك سعادة أبدية % وبقيت منصور العزائم ظافرا % % PageV01P793 البحر : - 1(@)(@@) % والذي زاد مقليك اقتدارا % % ما أظن الوشاة الا غيارا % % 2(@)(@@) % بهم مثل ما بنا من جفون % % شاجيات تهتك الأستارا % % 3(@)(@@) % كلما جال لحظها ترك النا % % س سكارى وماهم بسكارى % % 4(@)(@@) % يا غزالا رنا وغصنا تثنى % % وهلالا سما وبدرا أنارا % % 5(@)(@@) % كان دمعي على هواك لجينا % فأحالته نار قلبي نضارا % % 6(@)(@@) % حلية لا أعيرها لمحب % شغل الحلي أهله أن يعارا % % 7(@)(@@) % ما لقلبي اليتيم ضل وقد آ % % نس من 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms153# جانب السوالف نارا % % 8(@)(@@) % لك جيد ومقلة تركا الظ % % بي لفرط الحياء يأوي القفارا % % 9(@)(@@) % وثنايا أخذن في ريقها الخم % % ر وأعطين العقول الخمارا % % 10(@)(@@) % عاطرات الشميم تحسب فيه % % ن شذا من ثنا ابن شاد معارا % % PageV01P794 11(@)(@@) % المليك المؤيد اللازم السؤ % % دد إن حل حل أوسار سارا % % 12(@)(@@) % والجواد الذي حبا المال حتى % % كاد يحبو الأعمال والأعمارا % % 13(@)(@@) % أعدل المالكين حكما فما يظ % % لم الا العداة والدينارا % % 14(@)(@@) % فاح ذكرا وفاض في الخلق نهرا % فحمدنا الرياض والأنهارا % % 15(@)(@@) % ليس فيه عيب سوى أن إحسا % % ن يديه يستعبد الأحرارا % % 16(@)(@@) % لم يزل جوده يجور على الما % % ل إلى أن كسى النضار اصفرارا % % 17(@)(@@) % البدار البدار نحو نداه % % فإذا صال فالفرار الفرارا % % 18(@)(@@) % مثل ماء السماء خلقا هنيئا % وابن ماء السما علي واقتدارا % % 19(@)(@@) % كلما استغفر الرجا من سواه % % أرسلت كفه الندى مدرارا % % 20(@)(@@) % و إذا شبت الوغى فكأن الس % % يف من بأسه استعار استعارا % % PageV01P795 21(@)(@@) % ذو حسام مدرب لم يدع في % % جانب الشام للعدى ديارا % % 22(@)(@@) % أعجل الكافرين بالفتك عن أن % % يلدوا فيه فاجرا كفارا % % 23(@)(@@) % يا مليكا أحيي الثنا والعطايا % % فجلبنا لسوقه الأشعارا % % 24(@)(@@) % و تلقى بضائع القصد والحم % % د فجئنا إلى حماه تجارا % % 25(@)(@@) % اسأل الله أن يزيدك فضلا % وسموا على الورى وفخارا % % 26(@)(@@) % صنتني عن أذى الزمان وقدحا % % ول حربي واستكبر استكبارا % % 27(@)(@@) % و انبرى غيثك الهتون بجدوى % % علمتني مدائحا لا تبارى % % 28(@)(@@) % مامددنا لك اليمين ابتغاء % للعطايا الا شكرنا اليسارا % % PageV01P796 البحر : - 1(@)(@@) % في مرشفيه سلاف الراح من عصره % % ومعطفيه قوام البان من هصره % % 2(@)(@@) % وفي ابتسام ثناياه ومنطقه % % من نظم الدر أسلاكا ومن نثره % % 3(@)(@@) % ظبي قضى كل زيد في محبته % % وما قضى من ليالي وصله وطره % % 4(@)(@@) % مطابق الوصل في مرأى ومختبر % % فالخد سهل وأسباب الرضا وعره % % 5(@)(@@) % اذا انثنى شمت من أعطافه غصنا % عليه من كل حسن باهر زهره % % 6(@)(@@) % ذاك الذي خجلت أجفان مقلته % % من القلوب فراحت وهي منكسره % % 7(@)(@@) % بينا يرى جنة في العين مونقة % % حتى يرى جذوة في القلب مستعره % % 8(@)(@@) % كيف الخلاص لمطوي على شجن % % وقد تمالت عليه أعين السحره % % 9(@)(@@) % تغزو لواحظها في المسلمين كما % % تغزو سيوف عماد الدين في 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms154# الكفره % % 10(@)(@@) % ملك اذا نظرت عين الرجاء له % % لم يدفع الجود رؤياها اذا نظره % % PageV01P797 11(@)(@@) % مؤيد النعت والأفعال ذو شيم % لباسة لبرود الحمد مفتخرة % % 12(@)(@@) % يضيئ حسنا ويندي كفه كرما % فما ترى بدره ترى بدره % % 13(@)(@@) % اذا تأملت بشرا منه مقتبلا % عرفت من مبتداه في الندى خبره % % 14(@)(@@) % لو أن للغيث جزأ من مكارمه % % لم يهمل الغيث من سقيا الثرى مدره % % 15(@)(@@) % لا عيب فيه أدام الله دولته % % الا عزائم مجد عندهن شره % % 16(@)(@@) % و فكرة في العلى والفكر دائبة % % ليست على أمد في الفضل مقتصره % % 17(@)(@@) % طالت إلى الأفق فاستنقت دراريه % % و غاصت البحر حتى استخرجت درره % % 18(@)(@@) % آها لها فكرا حدت بمعرفة % % تحديد رب من الألفاظ بالنكره % % 19(@)(@@) % و همة في سماء العز واضحة % % كأنما الشمس من نيرانها شرره % % 20(@)(@@) % تباشر الحرب هولا وهي سافرة % % و تمنح المال جودا وهي محتقره % % PageV01P798 21(@)(@@) % يا حبذا منه في عين الثنا رجل % % شاف اذا الناس في عين الثناء مره % % 22(@)(@@) % أبهى وأبهر ما يلقاك منظره % % إذا نظرت على وجه الوغى قتره % % 23(@)(@@) % والبيض محنية الاضلاع من قدم % % على الطلا وقدود السمر منتظره % % 24(@)(@@) % والطرف قد نبتت بالنبل جلدته % % كأنه بين أنهار الدما شجره % % 25(@)(@@) % مناقب ما تولى الخبر أحرفها % % الا حسبت على عطف العلى خبره % % 26(@)(@@) % أقول للمدح اللاتي أنظمها % % ردي حماه على اسم الله مبتدره % % 27(@)(@@) % ما يخذل الله أوصافا ولا كلما % بين المؤيد والمنصور منتصره % % 28(@)(@@) % أضحى المؤيد للاملاك واسطة % % بين الأصول وبين النسل مفتخره % % 29(@)(@@) % ذاك الذي سترت رؤيا محاسنه % % ذنب الزمان فما يشكو امرؤ ضرره % % 30(@)(@@) % مهما أراه رفيع الذكر ممتدحا % فكل سيئة للدهر مغتفره % % PageV01P799 31(@)(@@) % ياابن الملوك قضوا أوقات ملكهم % سديدة وتقضوا سادة برره % % 32(@)(@@) % كم سفرة لي إلى مغناك فائزة % % أغنت لهاك يدي فيها عن السفرة % % 33(@)(@@) % ومدحة لي قد أيمنت طائرها % % حيث المدائح في أهل الغنى طيره % % 34(@)(@@) % فعش ودم لذوي الآمال ذا رتب % % علية ويد في الفضل مقتدره % % 35(@)(@@) % يا رب أفنان مدح فيك قد سطرت % % فأصبح الجود في أوراقها ثمره % % PageV01P800 البحر : - 1(@)(@@) % أفدي قمر عقلي قمر % % ثم غدر لما قدر % % 2(@)(@@) % فلا وزر ولا مفر % % يا من شهر سيف الحور 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms155# % % 3(@)(@@) % على البشر فما فتر % % حتى استعر وهج الفكر % % 4(@)(@@) % ولو أمر ذاك الخصر % % من الثغر أطفى شرر % % 5(@)(@@) % لكن هجر وما ادكر % % دما هدر هلا نظر % % 6(@)(@@) % دمعي نهر على زهر % % ذاك الخفر يحكي بدر % % 7(@)(@@) % ملك عمر بما نشر % % نشر الخبر من الخبر % % 8(@)(@@) % والمختبر لله در % تلك السير كم من غرر % % 9(@)(@@) % ومن درر فيها سمر % % إلى السحر ولا ضجر % % 10(@)(@@) % ولا ضرر علم مهر % % فضل ظهر ثم انتشر % % PageV01P801 11(@)(@@) % فكم غفر وكم نصر % % على الغير جدا عثر % % 12(@)(@@) % وكم قهر من ذي أشر % % دب الخمر يا من ستر % % 13(@)(@@) % أهل الحصر ممن شكر % % ثم عذر أنت المطر % % 14(@)(@@) % لا ما نظر على المدر % % سد من حضر ومن غبر % % 15(@)(@@) % ولا تذر لمن نذر % % من مفتخر إلا مضر % % PageV01P802 البحر : - 1(@)(@@) % يا عذولي خلني أغنم عمري % % ان أعمار الورى كالسحب تسري % % 2(@)(@@) % دع فؤادي والذي يختاره % % ماعلى ظهرك ياعاذل وزري % % 3(@)(@@) % دع غواني مجلسي تصدح لي % % فغد اتبكي البواكي حول قبري % % 4(@)(@@) % يا نديمي وهذا يومنا % % يوم صحو فاجعلاه يوم سكري % % 5(@)(@@) % واسقياني مثل خلقي قهوة % % بيدي بدر يغنيني بشعري % % 6(@)(@@) % أنا عذري الهوى لكن لي % % ثقة بالعفو تجلو وجه عذري % % 7(@)(@@) % والذي أهواه بدر قاتل % اعملوا ما شئتم يا أهل بدر % % 8(@)(@@) % ولسلطاني صفات مدحها % % صادق يمحى بها وزري وفقري % % 9(@)(@@) % ملك من آل أيوب له % % في تكاليف العلى ميراث صبري % % 10(@)(@@) % عادل ماكاد زيد النحو في % % دهره يعزى اليه ضرب عمرو % % PageV01P803 11(@)(@@) % وجواد ماليسر الغيث ما % % لندى راحته في حال عسر % % 12(@)(@@) % أفضلي التعت والذات فيا % % لهما من نسبتي سر وجهر % % 13(@)(@@) % يا مليكا أحمل المدح له % % وعجيب حامل درا لبحر % % 14(@)(@@) % إن أعداءك والأنعام في % % حالة فاجمعها في يوم نحر % % 15(@)(@@) % وتهنا ألف عيد مثله % % في مسرات وفي عز ونصر % % 16(@)(@@) % رفعت قدري فيه ليلة % % قربتني سيالها ليلة قدر % % 17(@)(@@) % وعلى القصر اجتماع ياله % % سفرا أفضى إلى جمع وقصر % % 18(@)(@@) % كنت غضبانا على الدهر وقد % % ردني جودك فرحانا بدهري % % 19(@)(@@) % فيمينا لسوى مغناك لا % % ينثني قصدي ولا أثني بشعري % % 20(@)(@@) % أنت غيثي ونباتي للثنا % % حقه أن يتلقاك بزهر % % PageV01P804 البحر : - 1(@)(@@) % تنبه لما أن رأى شيبه فجرا % % فنزه عن عاداته 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms156# الشعر والشعرا % % 2(@)(@@) % وأعرض عن أغزاله وغزاله % % فلا قامة سمرا ولا وجنة حمرا % % 3(@)(@@) % ولا مقلة نجلاء يحرس لحظها % % لمى فأقول السيف قد حرس الثغرا % % 4(@)(@@) % ولا مرشف ماء الحياة حسبته % % ولا نبت خد كنت أحسبه الخضرا % % 5(@)(@@) % ولا قهوة أستغفر الله تجتلى % % ومن عجب أن قد حلا منه ما مرا % % 6(@)(@@) % وكانت كما لا يقتضي العقل غرة % فحنك ذاك الشيب ذاك الفتى الغرا % % 7(@)(@@) % وذكرني فقد الأحبة مرجعي % % اليهم وترحالي فلم أستطع صبرا % % 8(@)(@@) % أحباء ساروا قبلنا لمنازل % فيا صاحبي رحلى قفا نبك من ذكرى % % 9(@)(@@) % كأنهم لم يركبوا ظهر سابح % % ولا ركبوا في يوم مكرمة ظهرا % % 10(@)(@@) % ولا بسطوا يمنى ببذل رغيبة % ولا أوجدوا من بعد جائحة يسرا % % PageV01P805 11(@)(@@) % لنا عبرة فيهم تنبه مقلة % ولو أرشدت كانت له مقلة غبرا % % 12(@)(@@) % لقد غرت الدنيا بخدعة حربها % % فما أكثر القتلى وما أرخص الأسرى % % 13(@)(@@) % حمى الله من عين الزمان وأهله % % لنا ملكا قد أحرز الذكر والأجرا % % 14(@)(@@) % ترجى لدنياها الملوك واننا % % لنرجوه للدنيا ملاذا وللأخرى % % 15(@)(@@) % مليك سمت عيناه للنسك والعلى % % فكانت قليلا من دجى الليل ما تكرى % % 16(@)(@@) % وأعذر في هجر التنعم نفسه % % وقال للاحيه لعل لها عذر % % 17(@)(@@) % على حين أعطاف الشبيبة لدنة % وروضتنا في الملك أو نفسها خضرا % % 18(@)(@@) % ومازال طهر الفعل حتى تشبهت % % فعال رعاياه فكان يرى طهرا % % 19(@)(@@) % ليهن بني أيوب أن محمدا % بنى لهم في كل صالحة ذكرا % % 20(@)(@@) % وبر البرايا عدله ونواله % % فلا عدموا من شخصه البر والبحرا % % PageV01P806 21(@)(@@) % وفي الناس من حاز الممالك جنة % ولكن جنان الخلد مملكة أخرى % % 22(@)(@@) % أيا ملكا نمسي اذا الدهر مظلم % % نراقب من لألاء غرته الفجرا % % 23(@)(@@) % بقيت لنا تعلو عن الشعر رتبة % % نعم وعلى هام السماكين والشعرى % % 24(@)(@@) % وتذكرنا عهد الشهيد ودهره % % سقى الغيث عنا ذلك العهد والدهرا % % PageV01P807 البحر : - 1(@)(@@) % بدت في رداء الشعر باسمة الثغر % % فعوذتها بالشمس والليل والفجر % % 2(@)(@@) % ولو شئت قسمت الذوائب مقسما % بطيب ليال من ذوائبها عشر % % 3(@)(@@) % وقبلتها مصرية حلوة اللمى % % أكرر في تقبيلها السكر المصري % % 4(@)(@@) % ويعذلني من ليس يدري صبابتي % % فأصرفه من حيث يدري ولا يدري % % 5(@)(@@) % ومن عجب الأشياء حلو ممنع % أصبر عنه وهو حلو 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms157# مع الصبر % % 6(@)(@@) % وكم لائم في حب خنساء أعرضت % % وعنف حتى جانس الهجر بالهجر % % 7(@)(@@) % وشيب رأسي خدها ومعنفي % % وهذا رماد الشيب من ذلك الجمر % % 8(@)(@@) % فيا قلب خنساء القوي وأدمعي % % على مثلك العينان تجري على صخر % % 9(@)(@@) % ويا قلب صبرا في عطاها ومنعها % % فلا بد من يسر ولا بد من عسر % % 10(@)(@@) % أرى الشمس منها في العشاء منيرة % ومن صدها عني أرى النجم في الظهر % % PageV01P808 11(@)(@@) % يذكرني عهد الوفا ما نسيته % % ولكنه تجديد ذكر على ذكر % % 12(@)(@@) % زمان الصبى والقرب لانحذر النوى % % ولكن نقضي الحال أحلى من التمر % % 13(@)(@@) % وأما وقد ضاء المشيب بمفرقي % % فبالشيب لا بالطوع صرنا إلى الهجر % % 14(@)(@@) % وفارقت خد الغانيات وجفنها % % فجرحا على جرح وكسرا على كسر % % 15(@)(@@) % وإني لمشتاق إلى ظل روضة % على النيل أروي العيش منها عن النضر % % 16(@)(@@) % لئن حثني باب البريد إلى مصر % % لقد حثني باب الزيادة في النزر % % 17(@)(@@) % إلى مصر يحلو نيلها مخصب الثرى % % فيغني الورى في الحالتين عن القطر % % 18(@)(@@) % وتقبيل حلو الغزو للمحل قاتل % % حلاوته سكب وجنديه يجري % % 19(@)(@@) % ويجري باسعاد العباد فحبذا % % بسعدك ياسلطانها ساعيا يجري % % 20(@)(@@) % لسلطان مصر الناصر بن محمد % على كل مصر طاعة البحر والبر % % PageV01P809 21(@)(@@) % تجمعت الأمصار في مصر طاعة % % وهل تجمع الأمصار إلاعلى مصر % % 22(@)(@@) % سلام على اسكندر الوقت أن يفح % % شذا الذكر عنه فالسلام على الخضر % % 23(@)(@@) % سلام ثغور الخلق تنقش في الثرى % % بأفواهها ختما على أنفس الذخر % % 24(@)(@@) % على باب سلطان العباد كأنها % % لنظم ثناياها عقود من الدر % 25(@)(@@) % مليك روت أعماله سير التقى % % عن الملك المصري عن الحسن البصري % % 26(@)(@@) % له منزلا جيش وتحت مقامه % % بهذا وذا في القلب حب وفي الصدر % % 27(@)(@@) % أيالة ملك لا فلان ولا فل % ونحو على لا نحو زيد ولا عمرو % % 28(@)(@@) % فملك بلا جور وحكم بلا هوى % % وأزر بلا وزر وعز بلا كبر % % 29(@)(@@) % قضا عمر في حلم عثمان جامعا % لبأس علي في سماح أبي بكر % % 30(@)(@@) % مضى الشفع من مرآى أبيه وجده % % وجاء فلا زالت له دولة الوتر % % PageV01P810 31(@)(@@) % إلى ناصر من ناصر وكذا على % % مدى جده المنصور مسترسل النصر % % 32(@)(@@) % أجل بيوت الملك بيت قلاون % وأنت أجل 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms158# البيت يا وارث الدهر % % 33(@)(@@) % فملكك حق واضح الصبح أشرقت % % سعادته كالظهر ياواحد العصر % % 34(@)(@@) % مراد البرايا أن تدوم وأن تووا % % وميراثك الباقي إلى ذلك الحشر % % 35(@)(@@) % بصوتك أركان الشريعة شيدت % % وصينت ثغور كلها باسم الثغر % % 36(@)(@@) % وخاض بها قوم تعدوا فقوبلوا % % بما كل انسان لديه من الخسر % % 37(@)(@@) % وليس الذي خاض الشريعة سالما % من الأسد الحامي حماها من المكر % % 38(@)(@@) % لك الله إما كسب حظ من الثنا % % يحوز وإما كسب حظ من الأجر % % 39(@)(@@) % ليهنك ما تجنيه من جنة غدا % % بإبطال ما تجنى الجنايات من وزر % % 40(@)(@@) % ليهنك ما عمرته من معالم % سيثني على عمارهن أبو ذر % PageV01P811 41(@)(@@) % ويمدحكم حسانها اليوم أو غدا % % بدار البقا بعد الطويل من العمر % % 42(@)(@@) % فأيامك الأعياد عائدة لمن % % رجاك ومن عاداك بالفطر والنحر % % 43(@)(@@) % وكفاك للمداح أيام عشرها % % وليلة من تسعى لها ليلة القدر % % 44(@)(@@) % ودولتك الزهراء للجود والسطا % % فبالفلك السعدي والفلك البشري % % 45(@)(@@) % ونصر على الاعدا يبادر رعبه % فيسبق مجرى الخيل بالعسكر المجر % 46(@)(@@) % ويعرض عن كيد العدا لاحتقارهم % % بلا قاصد ماش ولا حائم صقر % % 47(@)(@@) % فأعداك هذا مس في النوم رأسه % % وآخر قبل السيف مات من الذعر % % 48(@)(@@) % وكم لك في داني الديار ونازح % غيوث عطايا تخلط السهل بالوعر % % 49(@)(@@) % يضن بأحمال من التبن معشر % إذا اتصلت أحمال جودك من تبر % % 50(@)(@@) % مليك التقى والعلم والبأس والندى % % فمدح على مدح وشكر على شكر % % PageV01P812 51(@)(@@) % تهن وكل الناس عافية روت % % حديث التهاني عن بشير وعن بشر % % 52(@)(@@) % بها حملت عنك السقام بمصرها % % عيون المها بين الجزيرة والجسر % % 53(@)(@@) % فأحسن بها للملك في كل حالة % بشائر عند السيف والعز والنصر % % 54(@)(@@) % وأحسن بها حيث الهناء مسطر % صحائفها عن كاتب السر والجهر % % 55(@)(@@) % عوافي الا أنها قاهرية % حلت حالتاها في المسرة والقهر % % 56(@)(@@) % فعافية الاجساد عند ذوي الهدى ع وعافية الأطلال عند ذوي الكفرص هنئا لسلطان البرية سيرة سقط شطرين من ص % % مزهرة الأوراق بالأنجم الزهر % % 57(@)(@@) % هنيئا لاجلاب المدائح والرجا % % لقد أصبحت تجري إلى ملك تجري % % 58(@)(@@) % يبيع ولكن بالكلام نفائسا % من المال تلقاها غدا جمة الوفر % % 59(@)(@@) % ويبتاع لكن بالنفيس غواليا % من الحمد إلا أنه عاطر النشر % % 60(@)(@@) % غنينا عن 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms159# السبع البحار بأنمل % أفيضت كما يغنى عن السبع بالعشر % % PageV01P813 61(@)(@@) % وأحييت للآداب علما ومعلما % بنعماء تقري بالفوائد أو تقري % % 62(@)(@@) % وجوه دنانير سبقن بمعجز % ترينا وجوه التم في أول الشهر % % 63(@)(@@) % سبقن وان لم يشتكي الفقر بالغنى % % وقابلن من لم يشتكي الكسر بالجبر % % 64(@)(@@) % كذلك أذهان الملوك نقية % ترى في مراة العقل أيان يستقري % % 65(@)(@@) % تأملت ما تعطى الملوك من النهى % % فعوذت فردا بالثلاث من الحجر % % 66(@)(@@) % أحقا أراني في ثرى عتباته % % نباتا يحيي واكف المزن بالزهر % % 67(@)(@@) % وأنشدت امداحا تقول لمن أتت % % مدحتك بالشعرى وغيرك بالشعر % % PageV01P814 البحر : - 1(@)(@@) % سقى حماك من الوسمي باكره % % حتى تبسم من عجب أزاهره % % 2(@)(@@) % يا دار لهوي لا واش أكاتمه % % ولا رقيب بمغناها أحاذره % % 3(@)(@@) % حيث الشبيبة تصبي كل ذي حور % سيان أسود مرآها وناظره % % 4(@)(@@) % من كل محتكم الأجفان يخرجنا % % من أرض سلوتنا في الحب ساحره % % 5(@)(@@) % ظبي إذا شمت خديه ومقلته % % أذاب لاهبه قلبي وفاتره % % 6(@)(@@) % يأوي إلى بيت قلب فيه مخترب % فاعجب لمخرب بيت وهو عامره % % 7(@)(@@) % كأنه بيت شعر في عروض جوى % % دارت عليه بلا ذنب دوائره % % 8(@)(@@) % ليهن من بات مسرورا بهجعته % % إني عليه قريح الطرف ساهره % % 9(@)(@@) % مجري الدموع على طرف تألفها % % فاستسهلت لمجاريها محاجره % % 10(@)(@@) % كم ليلة بت أشكو من تطاولها % % علي والأفق داجي القلب كافره % % PageV01P815 11(@)(@@) % وأرقب الشهب فيه وهي ثابتة % كأنما سمرت منها مسامره % % 12(@)(@@) % حتى بدا الصبح يحكي وجه سيدنا % % قاضي القضاة اذا استجداه زائره % % 13(@)(@@) % لله صبح تجلى للشريعة عن % % ذاك الجلال لقد جلت مآثره % % 14(@)(@@) % أفدي البريد وللتقليد في يده % % مخلق تملأ الدنيا بشائره % % 15(@)(@@) % يكاد يلمع مطوي السطور به % % حتى ينم على فحواي ظاهره % % 16(@)(@@) % مسرة كان طرف الشرع يرقبها % % ومطلب كانت العليا تحاوره % % 17(@)(@@) % قاضي القضاة جلال الدين قد وضحت % % سبل القريض وصاغ القول ماهره % % 18(@)(@@) % هذي كؤس الثنا والحمد مترعة % باكر صبوحك أهنى العيش باكره % % 19(@)(@@) % واسمع مدائح قد فاه الجماد بها % % وقد ترنم فوق الأيك طائره % % 20(@)(@@) % ما أحسن الدين والدنيا يسوسهما % % والطيلسان فلا تخفى مفاخره % % PageV01P816 21(@)(@@) % كأن أبيض هذا تلو أسود ذا % % عين الزمان الذي مازاغ باصره % % 22(@)(@@) % حيث المقاصد في أبوابه زمرا % فليس للدهر ذنب 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms160# وهو غافره % % 23(@)(@@) % فاستجل طلعة ذي بشر وذي كرم % كالغيث بارقه الساري فماطره % % 24(@)(@@) % تصبو لحبر فتاويه لواحظنا % % فما عيون المها إلا محابره % % 25(@)(@@) % وينفذ الأمر كالسهم القويم فماع تحيد عن غرض التقوى أوامرهص لا شيء أحسن من مرآه مقتبلا سقط شطرين من ص % % إلا محاسن ما ضمت سرائره % % 26(@)(@@) % تجلو المهابة في ناديه رونقها % % فما نكاد بنجوانا نجاهره % % 27(@)(@@) % ويفهم السر من حاجات أنفسنا % % فما نطيق على أمر نساتره % % 28(@)(@@) % يا حاكما صان سوح الدين عاضده % % وفاز بالشرف المأثور ظافره % % 29(@)(@@) % وليت بالعلم لا بالحظ مرتبة % فاحكم بعلمك فيما أنت ناظره % % 30(@)(@@) % وانظر لحال غريب الدار مفتقر % % طال الزمان وما سدت مفاقره % % PageV01P817 31(@)(@@) % نعم الفتى أنت قد برت أوائله % % في المكرمات وقد أربت أواخره % % 32(@)(@@) % يممته دلفي الأصل منتسبا % تأبى معاليه أن تخفى عناصره % % 33(@)(@@) % لا يستقر بكفيه الثراء فما % % تلك الحظوظ بها إلا معابره % % 34(@)(@@) % زكا وأمكنه فعل الجميل فما % % في الناس لو قصرت جدواه عاذره % % 35(@)(@@) % ما بعد علياه ركن أستجير به % % من الخطوب ولا بحر أجاوره % % 36(@)(@@) % لئن تفرد بالعلياء سؤدده % % لقد تفرد بالآداب شاعره % % PageV01P818 البحر : - 1(@)(@@) % وقائع حب حاد في كرها فكري % % فمن حسد تمشي ومن أدمع تجري % % 2(@)(@@) % ولاح ثقيل في مليح ممنع % فيا لك من أحد لدي ومن بدر % % 3(@)(@@) % يظل أبا جهل علي بجهله % % وأمسي بأوصاف السقام أبا ذر % 4(@)(@@) % وأغيد في فيه المدام ولحظه % % وفي وفي أعطافه نشوة السكر % % 5(@)(@@) % تداويت من ألحاظه برضا به % % كما يتداوى شارب الخمر بالخمر % 6(@)(@@) % ونزهت فكري في بدائع حسنه % % وفي عقل عذالي على أنها تغري % % 7(@)(@@) % تبارك من أنشا بخديه زخرفا % وسبحان من أنشى عذولي بلا حجر % % 8(@)(@@) % لعمري لقد قاس الهوى نحو صبوتي % % مقاييس لم تعبأ بزيد ولا عمرو % % 9(@)(@@) % وأنفقت عمري في المليح محبة % % فان يسلني عذل فيا ضيعة العمر % % 10(@)(@@) % واني لعذري الصبابة ان روت % % حديث الاسى عني الدموع فمن عذري % % PageV01P819 11(@)(@@) % تسابق بيض المزن حمر مدامعي % % فتسبقها والسبق من عادة الحمر % % 12(@)(@@) % ويسهرني ومض البروق كأنما % % تبسم في لعس السحائب عن ثغر % % 13(@)(@@) % أما ومليح العصر انك بالبكى % % و بالسهد يا إنسان عيني لفي خسر % % 14(@)(@@) % معنى بوسنان 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms161# اللواحظ سارق % % كرى مقلني من حيث أدري ولا أدري % % 15(@)(@@) % يجر بنون الصدغ قلبي للأسى % % و ما خلت أن النون من أحرف الجر % % 16(@)(@@) % يقابل دمعي باسما فكأنما % % ينظم ما أملت جفوني من النثر % % 17(@)(@@) % وما لي لا أبكي على در مبسم % % كما بكت الخنساء قبلي على صخر % % 18(@)(@@) % وأجري عيون الدمع فائضة على % % عيون المها بين الجزيرة والجسر % % 19(@)(@@) % ظباء بشطي نيل مصر لأجلها % % يقول حنين الشوق آها على مصر % % 20(@)(@@) % خليلي شابت في النواظر لمتي % % و شب الأسى نار التذكر في صدري % % PageV01P820 21(@)(@@) % فلا تنكرا تعبيس وجهي فانما % % تنقل ذاك الابتسام إلى شعري % % 22(@)(@@) % وزالت بصبح الشيب عني خلني % % فكان زوال الشمس للصبح لا الظهر % % 23(@)(@@) % ويارب ليل كان لي بكؤوسه % % و مبسمه سلك ينظم بالدر % % 24(@)(@@) % تولى ووافى بالهموم كدمل % أكابده في الحالتين بلا فجر % % 25(@)(@@) % كأن النجوم المائلات بأفقه % % مفارق شيب لا تسر ولا تسري % % 26(@)(@@) % سقى الله أيام الشباب التي خلت % % من السحب أحلى ما يسيل من القطر % % 27(@)(@@) % رأيت شباب المرءعونا على الهوى % % وجود ابن فضل الله عوناعلى الدهر % % 28(@)(@@) % إذا ذكرت أهل السيادة والعلى % % فعد ابن فضل الله فاتحة الذكر % % 29(@)(@@) % إذا شمت منه طلعة علوية % فغال الثنا وارفض سنا لأنجم الزهر % % 30(@)(@@) % إذا ما علاء الدين حام فخاره % % فسل ثم عن نسر الكواكب لا النسر % % PageV01P821 31(@)(@@) % وزير بلا وزر وقاض بلا هوى % و غيث بلا عيب وبحر بلا ضر % % 32(@)(@@) % يسابقني لفظي لوصف زمانه % % و بالطبع تشدو الورق في الورق الخضر % % 33(@)(@@) % و يخدعه مثلي فيخدع للندى % % سريعا ولا والله ما هو بالغمر % % 34(@)(@@) % فسيح مجال الصدر بالبر للورى % % فيا لك من بحر ويا لك من بر % % 35(@)(@@) % و يالك من لفظ وفضل لطالب % يحقق أن الصدر والكف من بحر % % 36(@)(@@) % و يالك مجدا جل رائيه عن عمى % % ويا لك بحرا جل عافيه عن نهر % % 37(@)(@@) % يسر به ملك ويحمي ثغوره % % فليس يزال الملك مبتسم الثغر % % 38(@)(@@) % و مازال شفعا بأسه ونواله % % لدى الملك حتى ما ينام على وتر % % 39(@)(@@) % فما الشمس في ظهر مثيلة وصفه % % ولا مثله فيما تقدم من عصر % % 40(@)(@@) % و مافيه من عيب يعد 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms162# لناقد % سوى أنه بالجود مستعبد الحر % PageV01P822 41(@)(@@) % و أن ثناه فاضح حصر الورى % % وأن نداه لا يحاول بالحصر % % 42(@)(@@) % من القوم في بطحاء مكة أصلهم % % وأفناؤهم في الخلق فواحة الزهر % % 43(@)(@@) % إذا فرق الفاروق في الخلق ذكرهم % % فيا حبذا الاطهار تعزى إلى الطهر % % 44(@)(@@) % إذا ذكرت أقلامهم وسيوفهم % % فناهيك بالحمر الرواعف والسمر % % 45(@)(@@) % طوى شخصهم دهر وقام بمجدهم % % يفوح ثنا يستقبل الطي بالنشر % % 46(@)(@@) % له قلم يدعو الدواة كتابة % % ويغزى به عيش الملوك إلى النضر % % 47(@)(@@) % حفي غداة المكرمات أو الوغى % % ببيض أياديها وأعلامها الصفر % % 48(@)(@@) % و نظم ونثر يخرجان ذوي النهى % % لعمرك من أرض التثبت بالسحر % % 49(@)(@@) % لأجيادنا منه وللطرس حلية % فأجيادنا بالجود والطرس بالشذر % % 50(@)(@@) % و للحرب صف من سطور كأنها % % حديد يسوق الناكثين إلى الحشر % % PageV01P823 51(@)(@@) % بكف كريم الإرث والكسب في العلى % % فمن خبر نامي الفخار ومن خبر % % 52(@)(@@) % همام إذ الآراء حثت لغارة % % كريم إذا حثت على الكلم الغر % 53(@)(@@) % له منزل في القلب من كل جحفل % وفي المحفل السامي محل من الصدر % % 54(@)(@@) % بزهر من الآراء والقول واللهى % % روينا صحيح الحمد منها عن الزهري % % 55(@)(@@) % فيا حبذا عبد الرحيم توسلا % ويا حبذا الطائي في الجود والشعر % % 56(@)(@@) % ألم ترني أني نهضت بمدحه % % وألقيت أمداح البرية عن فكري % % 57(@)(@@) % أمولاي قد غنى بمدحي لك الورى % % وسارت به الركبان في السهل والوعر % % 58(@)(@@) % و قصر عن نظمي الأنام وشيدت % % عليك مباني بيته فهو كالقصر % % 59(@)(@@) % اذا رفعت قدري بمدحك ليلة % % تيقن قصدي انها ليلة القدر % % 60(@)(@@) % وقضيتها والنيرات تمدني % % سلاما وتسليما إلى مطلع الفجر % % PageV01P824 61(@)(@@) % على أن عندي كأس شكوى أديرها % % على السمع ممزوجا بمدمعي الغمر % % 62(@)(@@) % أيكسر حالي بالجفاء وطالما % % تعودت من نعماك عاطفة الجبر % % 63(@)(@@) % و يدفعني عن قوت يومي معشر % وأنت عليهم نافذ النهي والأمر % % 64(@)(@@) % و لو كان ذنب لاعترفت به ولا % % تحيلت في عذر ولا جئت من غفر % % 65(@)(@@) % أحاشيك أن يدجو زماني بعدما % % أضاءت بشعري في المدائح من شعري % % 66(@)(@@) % بنيت على ضم ولاءك في الحشا % % فلا تبن بيت القلب مني على كسر % % 67(@)(@@) % وان تخف ياذا السر عنك محبتي % % فشاهد حبي عالم السر والجهر % % PageV01P825 البحر : - 1(@)(@@) % يتيم ابتسامك 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms163# ما يقهر % % فسائل دمعي لا ينهر % % 2(@)(@@) % وانسان عيني إلى كم كذا % % بحين من الدهر لا يذكر % % 3(@)(@@) % و خدك ذا السهل ما باله % % على من رجا قبلة يعسر % % 4(@)(@@) % عن الورد يروي فيا حسن ما % % رواه لنا خلف الأحمر % % 5(@)(@@) % و يا حبذا حوله عارض % لدمعي هو العارض الممطر % % 6(@)(@@) % يقول نناسب روحي له % % هي النفس خضراء يا أخضر % % 7(@)(@@) % عسى يجبر الصب آس العذار % % فبالآس كسر الورى يجبر % % 8(@)(@@) % لك الله قلبا بحر الأسى % % ومن عمل الحب لا يفتر % % 9(@)(@@) % وهبت الكرى لجفون الرشا % % فكم ذا ينام وكم أسهر % % 10(@)(@@) % و كم قيل للنفس قال العذول % % فقالت جفون الرشا تغتر % % PageV01P826 11(@)(@@) % تعشقه بابلي اللحاظ % % يسكر من شاء أو يسحر % % 12(@)(@@) % ولام على حسنه المجتلي % % وقاح العيون فما أثروا % % 13(@)(@@) % و قالوا أما يرعوي سامع % فقلت أما يستحي مبصر % % 14(@)(@@) % حلوت وأمررت ملح الملاح % % فيا حبذا الملح والسكر % % 15(@)(@@) % و كرر لي ذكرك العاذلون % % فما كان أحلى الذي كرروا % % 16(@)(@@) % و وجهك جامع لذاتنا % % فيا حبذا الجامع الأقمر % % 17(@)(@@) % و ثغرك يشهد مسواكه % % فأعدل به شاهدا يسكر % % 18(@)(@@) % و يارب نيل بلقيك قد % % تبين لي فعله المضمر % % 19(@)(@@) % بخصرك والنهد نحو الهنا % % فهذا أضم وذا أكسر % % 20(@)(@@) % فيالك ليلا لو المانوي % % رآه رأى أنه الخير % % PageV01P827 21(@)(@@) % و أشرق إشراق ذاك الدجى % % فما منهما واحد يكفر % % 22(@)(@@) % و طابق أجفان عيني الظلام % % فهذا يطول وذي تقصر % % 23(@)(@@) % و ما قصر الليل أو طوله % % سوى أنك تسعف أو تهجر % % 24(@)(@@) % و ما الحزن والعيش الا سطا % % علي وأنعمه تنشر % % 25(@)(@@) % وزير اذا نظراء العلى % % تردوا ولاذوا به أزروا % % 26(@)(@@) % اذا سلكوا نحوه عرفوا % % برفع وإن تركوا نكروا % % 27(@)(@@) % فما صغروا وبه كبروا % % و لا كبروا وبه صغروا % % 28(@)(@@) % سعادة جد بها يحتذى % % ونهج أب في العلى يشهر % % 29(@)(@@) % كريم رأينا مسيء الزمان % % ببسط أياديه يستغفر % % 30(@)(@@) % فحسب الملوك سفير لهم % % وجوه إنالته تسفر % % PageV01P828 31(@)(@@) % و حسب ابن يحيى حياة العلى % % ولبعض معالي الورى تقبر % % 32(@)(@@) % زها أفق مصر بتدبيره % % فطالعها أبدا يزهر % % 33(@)(@@) % و قاهرة شادها لفظه % % فشائدها أبدا جوهر % % 34(@)(@@) % هو اللفظ حال به جيدها % % كفيل ندى وردى يهمر % % 35(@)(@@) % وزهر الورى خضر بالهنا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms164# % % وملك البرية إسكندر % % 36(@)(@@) % و صاحب أسراره كاتم % % وأنعمه في الورى تجهر % % 37(@)(@@) % مقيم على النيل لاابن الفرات % % ومجدهم البحر لا جعفر % % 38(@)(@@) % يعجل غاية ما يرتجى % % ويحلم ساعة ما يقدر % % 39(@)(@@) % و لا عيب فيه سوى سؤدد % % تكد الفهوم ولا يحصر % % 40(@)(@@) % على فضله خنصر العاقدين % % ومن أجل ذا حلي الخنصر % % PageV01P829 41(@)(@@) % و في يده فاضلي اليراع % % مقيم وسؤدده سير % % 42(@)(@@) % تغازل أحرفه كالظبا % % وطورا يحاذرها القسور % % 43(@)(@@) % اذا صاولته سيوف العدى % % فما ضره الشانئ الأبتر % % 44(@)(@@) % و ان ساجع الورق مال الحيا % % بها خلف أوراقها تستر % % 45(@)(@@) % و ان فاض درا على سامع % % فأنمل حامله الجسر % % 46(@)(@@) % أخا الفضل مكتملا وابنه % % ليهنك عام الهنا الأزهر % % 47(@)(@@) % فقابل بعلياك فيه الهلال % % لينحر حسادها خنجر % % 48(@)(@@) % و عش يا كثير الندى والثنا % % وأجرك من ذا وذا أكبر % % 49(@)(@@) % بجود يديك ابن فضل الاله % % تناسب منطقي الابهر % % 50(@)(@@) % فان كنت غيث ندى هاملا % فإن نبات ثنا مزهر % % PageV01P830 51(@)(@@) % شعرت بمدحك حتى بهرت % % وكنت من العي لا أشعر % % 52(@)(@@) % و حلق خلقي بهذا المطار % % أناس عن الخطو قد قصروا % % 53(@)(@@) % إلى صنعة الشعر فليدع في % % حمى الفضل شاعرك الأظهر % % 54(@)(@@) % محب لتشبيبه مادح % % يروح سوى مدحه يزمر % % PageV01P831 البحر : - 1(@)(@@) % بشراك ان السرى والعود مبرور % % وأن سعيك عند الله مشكور % % 2(@)(@@) % وان حجك في عاف بمصر دعا % % كمثل حجك بالبطحاء موفور % % 3(@)(@@) % وان كل حمى يممت دار هنا % وخادم الوقت مختار ومسرور % % 4(@)(@@) % وأنك الغيث ان تحكم على أفق % % فالجدب والخصب منهي ومأمور % % 5(@)(@@) % لا غرو ان حجزت محل الحجاز لها % بنقط أيسرها المعمور معمور % % 6(@)(@@) % يسري إلى البيت معمورا بوافده % % بحر بفيض الندى والعلم مسجور % % 7(@)(@@) % في فرقة بولا علياه ضاحية % % شموس علم تحامتها الدياجير % % 8(@)(@@) % تموا وصحوا بأبواب العلاء فما % % في الاسم نقص ولا في الجمع تكسير % % 9(@)(@@) % يطوون برد الدجى والبيد في طرق % % كأنهن لجند العلم منشور % % 10(@)(@@) % بكل وجناء باسم الله قد برزت % % كأنها لأمير العلم مسطور % % PageV01P832 11(@)(@@) % حرف على صحف البيداء يعرب عن % % إعمالها السير مرفوع ومجرور % % 12(@)(@@) % آثار مبسمها فوق الثرى قمر % وعقلها بشعاع الحي مقمور % % 13(@)(@@) % يمد آمالها شوق قد اقتصرت % % على هواه فممدود ومقصور % % 14(@)(@@) % ولابن يحيى الذي 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms165# تغنى المحول به % % بروق بشر وراها القطر مقطور % % 15(@)(@@) % من بركة الحب حتى بئر زمزم لا % % محل بنعماه إلا وهو ممطور % % 16(@)(@@) % فياله محرما في حجة عبقت % % رياه وهو صحيح النسك مسرور % % 17(@)(@@) % مستقبل الكعبة العظمى له طرب % % حيث الستور وتمجيد وتطمير % % 18(@)(@@) % يطوف منك على الاركان ركن تقى % % عال له سند في الفضل مأثور % % 19(@)(@@) % و بيت مكة ياذا البيت من عمر % % بذكر نفعك للاسلام معمور % % 20(@)(@@) % في ذب رأيك عنه للملوك هدى % % كأنما هو للآراء اكسير % % PageV01P833 21(@)(@@) % محمرة منك بالآلآء ممتلئ % % وملء آكمام غاويه الدنانير % % 22(@)(@@) % لله حجر بذاك البيت أو حجر % % ما للهنا في حجر عنك محجور % % 23(@)(@@) % و سنة لك في التحليق عالية % % وما لمثلك في العلياء تقصير % % 24(@)(@@) % و في منى جمرات مالها ثمن % % لكن لها في حشا الشيطان تسعير % % 25(@)(@@) % أحسن بأيام عيش في منى وصلت % % لياليا فثياب الحسن تشهتير % % 26(@)(@@) % و حبذا سنة في الحج زاهرة % % ست كما قيل فيها الخير والخير % % 27(@)(@@) % وزورة لمعاني طيبة اقتبلت % % وللصباح بلا شك تباشير % % 28(@)(@@) % فيا سرور علي من محمدها % % بالقرب يرقص بيتا وهو معمور % % 29(@)(@@) % و شدوة المدح باك في مسرته % % فدر حاليه منظوم ومنثور % % 30(@)(@@) % و يالها من ليال غير قائلة % % زورا فما الظن في هذا الحمى زور % % PageV01P834 31(@)(@@) % لا عيب فيه سوى الجنح القصير وما % % كأن غيهبها بالشهب مسمور % % 32(@)(@@) % وعودة لحمى ملك يطوف بها % % يا كعبة الجود ملهوف ومضرور % % 33(@)(@@) % يا عارفا حفظ أسرار الملوك له % % عرف من الفضل والاقطار مشهور % % 34(@)(@@) % أما العفاة فما تنفك جائرة % على نداك اذا قال الرجا جوروا % % 35(@)(@@) % للمال والجاه قد جاروا بها قصصا % في طيها عبر منهم وتعبير % % 36(@)(@@) % ان ثقلوا فعل جود قد أبر فما % % في المن من ولا في الصفو تكدير % % 37(@)(@@) % لفضة كم رجاك القوم أو ذهب % % وحببت للمثاقيل القناطير % % 38(@)(@@) % و أنت مبتسم الثغر البهيج بهم % % وثغر مالك بين القوم مثغور % % 39(@)(@@) % عنوان بشرك يولي اليسر كل يد % % معجلا فاذا العنوان تيسير % % 40(@)(@@) % وروض لفظك ريحان القلوب اذا % % سجعته فاذا الريحان منثور % % PageV01P835 41(@)(@@) % تغدو له صور الأضداد باهتة % كأنما هي من عي تصاوير % % 42(@)(@@) % و نظمك الزهر لكن بعضه 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms166# زهر % مع أنه النور الا أنه النور % % 43(@)(@@) % يبكي الوليد الذي من بحتر قصرا % وعنه يمسي جرير وهو مجرور % % 44(@)(@@) % و في يراعك سر من سعادته % % قد صح منه لعلم الحرف تأثير % % 45(@)(@@) % في الجود غصن جنان غير منقطع % % له على الطرس توريق وتتمير % % 46(@)(@@) % و في اقتحام الوغى رمح يلوح له % % على عدى الملك كعب فيه تدوير % % 47(@)(@@) % محكم فالفنا بالخوف مضطرب % % والقوس منه كما قيل موتور % % 48(@)(@@) % و بعض تدبيره الدنيا وما وسعت % % فالكيمياء على ذا الحكم تدبير % % 49(@)(@@) % يا ابن الخلافة في البيت العتيق له % % نفع جديد على الاسلام محبور % % 50(@)(@@) % يا شارع الأمر في جود وعادله % % فجوده حاضر والعذل محظور % % PageV01P836 51(@)(@@) % يامن لتقواه في مسك الثنا عبق % مزاجه من بياض العرض كافور % % 52(@)(@@) % خذها مدائح من حبر ومن حبر % % كسوتني لكلا النوعين تحبير % % 53(@)(@@) % عاملت حب علي والولاء بها % % فهي الدواوين فيها والمساطير % % 54(@)(@@) % ما بعد در معانيها وصنعته % % برسم جودك عند الفكر مدخور % % 55(@)(@@) % اذا سرت من دمشق الواردون بها % % لكل مصر فأحداق العدى عور % % 56(@)(@@) % ضمنت قلبي الوفا مع حسنها فوفى % % مع أنه ضامن بالصد مكسور % % 57(@)(@@) % ماذا ترى في نظامي لو عطفت فذا % % نظمي وفكري من الأعراض مذعور % % 58(@)(@@) % لازلت ماسارت الركبان ممتدحا % لعمره وبيوت الشعر تعمير % % PageV01P837 البحر : - 1(@)(@@) % تجلى فقلت البدر والليل شعره % % وماس فقلت الغصن والحلي زهره % % 2(@)(@@) % وأفصح عن ألفاظه وابتسامه % % فأعجبني نظم الجمان ونثره % % 3(@)(@@) % مليح يغيظ الورد حمرة خده % % ويطوي حديث العنبر الورد نشره % % 4(@)(@@) % كأن بما في الثغر نظم عقده % % والا بما في العقد نظم ثغره % % 5(@)(@@) % عجبت لمخضر العذار بخده % % على أنه يذكو ويلهب جمره % % 6(@)(@@) % وليس عذارا ما أرى غير أنه % % لماء حياة الريق أقبل خضره % % 7(@)(@@) % كلفت به حلو اللمى بابليه % % فمن أين يحلو عنه للمرء صبره % % 8(@)(@@) % وأسكنته قلبي الذي طار فرحة % فطائره قلبي الحزين ووكره % % 9(@)(@@) % ووالله ما وفيته حق نزله % % اذا كان في نار الحشا مستقره % % 10(@)(@@) % علي له أن أبذل القلب والحشا % % على ما يرى في الحب والأمر أمره % % PageV01P838 11(@)(@@) % ويعجبني طرف تدر دموعه % % على حسنه الغالي فلله دره % % 12(@)(@@) % أحن لوجه تهت فيه صبابة % فلله صب ضل 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms167# اذلاح بدره % % 13(@)(@@) % وأنصب طرفي نحو طرف يشوقني % % اذا مالتقى في الحب نصبي وكسره % % 14(@)(@@) % أما والذي قاست عليه جوانحي % % من الضنك ما قاسى من الردف خصره % % 15(@)(@@) % لقد زين قلبي المستهام بحبه % % كما بشهاب الدين قد زين دهره % % 16(@)(@@) % رئيس كما ترضى السيادة والعلى % % به زال ذل الدهر واشتد ازره % % 17(@)(@@) % كثيرالايادي البيض في كل مقصد % % اذا ماغدت تسعى على الطرس حمره % % 18(@)(@@) % عليك به ان عافت المدح الورى % % وضاق به سهل الرجاء ووعره % % 19(@)(@@) % سجاياه لازهر الرياض وعرفها % % وجدواه لا ظل الغمام وقطره % % 20(@)(@@) % اذا رمت أن تتلو على يده الرجا % % فتيسير عنوان الندى منه نشره % % PageV01P839 21(@)(@@) % رأيت له فضلا على جامعي الثنا % % كما فضل الشهر المحرم عشره % % 22(@)(@@) % و قدرا اذا أضحى به الذكر طائرا % غدا واقعا عنه من الليل نسره % % 23(@)(@@) % من الباذلي الاموال والقامعي العدا % % فأعداؤه تشكو النثار ونثره % % 24(@)(@@) % له قلم تنهل بالجود سحبه % % وتشرق في أفق الفضائل زهره % % 25(@)(@@) % عجبت له من طاهر اللفظ ظاهر % % على أنه قد حاق في الناس سحره % % 26(@)(@@) % أما وأبي العليا لقد ساد في الورى % % سيادة من أربى على الحصر شكره % % 27(@)(@@) % أثاب فقلنا الغيث أبداه شامه % % وزاد فقلنا النيل أهدته مصره % % 28(@)(@@) % هو الملتقي رفعة بتواضع % ورب رفيع حط علياه كبره % % 29(@)(@@) % و أفعاله أوفى ندى من مقاله % % واكرم من أخباره الغر خبره % % 30(@)(@@) % و أفسح من بحر البلاد وبرها % % ومدحي وآمالي نداه وصدره % % PageV01P840 31(@)(@@) % علقت بحبل من مودته التي % % هي الذخر لا بيض الثراء وصفره % % 32(@)(@@) % و عاودته بالقصد أجلو مدائحي % % على فكره الأذكى وحسبي فكره % % 33(@)(@@) % ومن كان مثلي واثقا بولائه % % فيا ليت شعري ما يحاول شعره % % PageV01P841 البحر : - 1(@)(@@) % ديار شعري سقاك السعد ماطره % % ما أحسن الحي عاد الأنس زائره % % 2(@)(@@) % يا عائدين بمغناهم إلى أفق % عود النجوم جلت عنه دياجره % % 3(@)(@@) % محبكم جامع الأشواق مالئة % قد بات فيه صريع الجفن ساهره % % 4(@)(@@) % أبلى له السقم لما طال بعدكم % % جسما أبى العهد أن يبلي سرائره % % 5(@)(@@) % حتى غدا بخمار القرب في طرب % بعد البعاد الذي قد كان خامره % % 6(@)(@@) % يا حبذا القلب خفاقا بعشقتكم % % ما كان أيمن في العشاق طائره % % 7(@)(@@) % ما كان 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms168# أولى بسبق الدمع يذكر لو % % قد اخطرت لمعات البرق خاطره % % 8(@)(@@) % عش ياوزير التقى والبر محتويا % في الأجر والدكر أولاه وآخره % % 9(@)(@@) % ويا سليمان ملك في سيادته % % لا ينبغي لسري أن يسايره % % 10(@)(@@) % لو صور الشام شخصا كنت صاحبه % % وجامع الشام وجها كنت ناظره % % PageV01P842 11(@)(@@) % عمرت من ذا وذا صرحين قد شكرا % % يقظان من ذا الذي لم يمس شاكره % % 12(@)(@@) % فمن رآك وآثارا ظهرت بها % % رأى سليمان واستجلى عمائره % % 13(@)(@@) % في جامع الشام أركان مصدرة % تملي الثنا وارد المعنى وصادره % % 14(@)(@@) % سعادة لحظت أركان مستلم % قد كاد بعدك أن تدمي محاجره % % 15(@)(@@) % وفي المحاريب من نص التقى سير % كادت ترنح من عجب منابره % % 16(@)(@@) % وفي أعاليه سرج من محامدكم % % قبل القناديل تستعلي منائره % % 17(@)(@@) % وفي حمى الشام والدنيا لواحدها % % ذكر يعرف عرف المسك ذاكره % % 18(@)(@@) % أرضى بها الله والسلطان ذو قلم % بالخير أعيي ابن سهل أن يحابره % % 19(@)(@@) % حيث الرعية والديوان قد مدحا % % ممدحا خصت العليا مآثره % % 20(@)(@@) % شم في العلى فضله والجود جعفره % % والنسك عماره والعزم عامره % % PageV01P843 21(@)(@@) % كم باب نصر وكم بابا إلى فرج % فتحت يا فائز المسعى وظافره % % 22(@)(@@) % زكت عناصر مولانا وأردفها % % فضل فأول ما زكى عناصره % % 23(@)(@@) % تقوى مخافتها لله خوف من % % ذكراه أسد الفيافي أن تجاوره % % 24(@)(@@) % وهمة ركبت شهب النجوم فما % % يسطاع بهرام أفق أن يسايره % % 25(@)(@@) % و جود كفين في سر وفي علن % % لا تجسر المزن أيضا أن تكاثره % % 26(@)(@@) % ثنى عن العرض الأدنى له بصرا % ثتى إلى الجوهر الأعلى بصائره % % 27(@)(@@) % فليهنه الذكر سيار المديح له % % إن قيل ما اخترت منه قلت سائره % % 28(@)(@@) % والأجر كم جائع عار يقول لقد % % أصلحت باطن ملهوف وظاهره % % 29(@)(@@) % وكم صنائع معروف تقول ألا % % ماكان أربح في الصنفين تاجره % % 30(@)(@@) % فلتهنه خلع دامت مبشرة % % بيمنه منصبا أضحى مباشره % % PageV01P844 31(@)(@@) % بيضا وخضرا كأن الطيلسان بها % % غيم سقى الروض فاستجلى أزاهره % % 32(@)(@@) % شعار نعم وزير قد دعوه إلى % % نعم البيوت فوفاه شعائره % % 33(@)(@@) % مد البنان بأقلام لها نعم % لمثلها يعقد المثنى خناصره % % 34(@)(@@) % أغصان رزق لديه أو نجوم هدى % % فقل أزاهره أو قل زواهره % % 35(@)(@@) % يافائض البحر من جود ومن كرم % % إن شئت كامله أو 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms169# شئت وافره % % 36(@)(@@) % ياذا البراعة من أسعفت مدحته % % لقد أعدت إلى بحر جواهره % % 37(@)(@@) % يا من تقول البرايا حين أمدحه % % قد أفرد الله ممدوحا وشاعره % % 38(@)(@@) % خذها عجالة من نورت في مدح % بالنور أسطره والنور خاطره % % 39(@)(@@) % لئن نشرت على دهري قصائده % % لقد طويت على حب ضمائره % % PageV01P845 البحر : - 1(@)(@@) % نفرت عن الظبي الذي كان ينفر % % وحلت عن العشق الذي كان يؤثر % % 2(@)(@@) % دعوني فما عين الغزال كحيلة % % بعيني ولا وجه الغزالة نير % % 3(@)(@@) % وخلوا أحاديث الجفون فواترا % فقد حل بي الخطب الذي ليس يفتر % % 4(@)(@@) % ونبهني الحال الذي بأقله % % ينبه من سكر الغرام كثير % % 5(@)(@@) % مشيب واقتار هو الشيب ثانيا % ألا هكذا يأتي الشقاء المكرر % % 6(@)(@@) % أبى الدهر أن يصغى لألفاظ معرب % له أمل بين المقادير مضمر % % 7(@)(@@) % فهل للأيادي الناصرية عطفة % يغاث بها داعي الرجاء وينصر % % 8(@)(@@) % رئيس له رأي كما وضحت ذكا % % وجود كما يهمي الغمام ويهمر % % 9(@)(@@) % و علم اذا ماغاض في الفكر غوصة % % رأيت لآلي لفظه كيف تنثر % % 10(@)(@@) % و بأس يذيب الصخر لكن وراءه % % عواطف من أحلامه حين يقدر % % PageV01P846 11(@)(@@) % علا عن فخار البرمكي فخاره % % وما قدر ما يبدي لدى البحر جعفر % % 12(@)(@@) % و قد سكنت في قلبه الطهر رحمة % يكاد بمسرى نشرها الميت ينشر % % 13(@)(@@) % فمن مبلغ تلك العواطف قصة % تكاد لها صم الصفا تتفطر % % 14(@)(@@) % إلى م وأنت الغيث أرجع ظامئا % وحتى م يا ظل العفاة أهجر % % 15(@)(@@) % و كم يشرح البطال سيرته التي % % يكافحها من حادث الدهر عنتر % % 16(@)(@@) % و قالوا فلان رم بالشعر عيشه % % فيا ليت أني ميت لست أشعر % % 17(@)(@@) % تصرم أقصى العمر أدعوك للمنى % % وأرقب آفاق الرجاء وأنظر % % 18(@)(@@) % و أصبر والايام تقتلني أسى % فها أنا في الدنيا قتيل مصبر % % 19(@)(@@) % أرى دون حظي مسلكا متوعرا % اذا ماجرت فيه المنى تتعثر % % 20(@)(@@) % و يحمر دمعي حين تصفر وجنتي % % فألبس ثوب الهم وهو مشهر % % PageV01P847 21(@)(@@) % ولاذنب لي عند الزمان كما ترى % % سوى كلم كالروض تبهى وتبهر % % 22(@)(@@) % سوابق من نظم الكلام ونثره % % لها خبر في الخافقين ومخبر % % 23(@)(@@) % و أنت الذي نطقتني ببديعها % % وأحوجنني أنشي الكلام وأنشر % % 24(@)(@@) % فوائد وإن عادت علي مصائبا % فأنت بتدبير القضية أجدر % % 25(@)(@@) % و 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms170# ما هي الا مدة وقد ارتوى % % رجائي فأضحى وهو فينان أخضر % % 26(@)(@@) % و طرس اذا ما النقش عذر وجهه % % فان وجوه القصد لا تتعذر % % 27(@)(@@) % قصدتك للتنويه والجاه لا لما % % تبيض من هذي اللهى وتصفر % % 28(@)(@@) % اذا جمع الانسان أطراف قصده % % لنفحة مال فهو جمع مكسر % % PageV01P848 البحر : - 1(@)(@@) % هنيئا لأفق الفضل إنك بدره % % وإن سجاياك الكريمة زهره % % 2(@)(@@) % قدمت قدوم الغيث يهمي نواله % % ويعبق رياه ويبسم ثغره % % 3(@)(@@) % وقبلك لم تبصر بنو الشام وابلا % من الغيث تهديه إلى الشام مصره % % 4(@)(@@) % وأقبلت إقبال البدور حقيقة % على جائر الأيام أظلم دهره % % 5(@)(@@) % وما كان لولا نور وجهك طالعا % من الغرب بدر يملأ الأرض بشره % % 6(@)(@@) % وأنت الذي في مصر والشام أشرقت % % معاليه فاستولى على النجم قدره % % 7(@)(@@) % لك الصدر من ديوان تلك وإنما % % لصدرك من هذا مدى الدهر سره % % 8(@)(@@) % وكم أفق طالت قوادم نجمه % % يقصر عن أدنى خوافيك نسره % % 9(@)(@@) % تقر لك السادات طوعا وعنوة % ويحسن سر الفضل فيك وجهره % % 10(@)(@@) % كأنك في العليا أبوك سقى ثرى % % أبيك حيا يهمي فلله دره % % PageV01P849 11(@)(@@) % وقارك في حزم الأمور وقاره % وبشرك في صنع المعارف بشره % % 12(@)(@@) % ترحلت يا يحيى وفضلك خالد % هو البحر إلا أن جعفر نهره % % 13(@)(@@) % إلهي أطل للدهر في عمر أحمد % فيا حبذا الشخص الكريم ودهره % % 14(@)(@@) % يوازر أملاك الزمان كما ترى % % فيشتد بنيان الزمان وأزره % % 15(@)(@@) % ويعجبه فعل الجميل مطابقا % فيحفظ علياه ويبذل وفره % % 16(@)(@@) % ولا عيب فيه غير إفراط سؤدد % يشق على جهد المدائح حصره % % 17(@)(@@) % فتى النسب الوضاح والشيم التي % % يقل لها من بارع الحمد كثره % % 18(@)(@@) % وذو البيت أما آل يحيى فنظمه % % وأما أبو حفص الإمام فبحره % % 19(@)(@@) % تقر له السادات طوعا وعنوة % % ويحسن سر الفضل فيه وجهره % % 20(@)(@@) % له قلم ينحو الجميل فرفعه % % لرتبة داعيه وللضد كسره % % PageV01P850 21(@)(@@) % إذا قام يحيى دولة بسواده % % عنت دونه بيض القراع وسمره % % 22(@)(@@) % قصير لأمر ما يجدع أنفه % % إلى أن رأينا الملك قد عز نصره % % 23(@)(@@) % بكف فتى لو كان للبحر جوده % % لفاض كما قد فاض في الطرس دره % % 24(@)(@@) % وممتدح يلقاك منه إذا بدا % % مديد العلى باهي المحيا أغره % % 25(@)(@@) % يرنحه شدو السؤال كأنما % % تثنت 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms171# بعطفيه وحاشاه خمره % % 26(@)(@@) % أنجل العلى قابلتني ساعة العلى % % مقابلة لاقى بها القلب جبره % % 27(@)(@@) % اذا شيد في نظم امتداحك بيته % % فما هو الا في ذوي النظم قصره % % 28(@)(@@) % لمدحك يا معنى النسيب تأخرت % % قوافي نسيب طالما طار شعره % % 29(@)(@@) % على أنني مغرى بكل مقرطق % بما خده ماء الحياة وخضره % % 30(@)(@@) % عجبت له في كأس مرشفه الطلا % % وفينا ولم يقرب من الكاس سكره % % PageV01P851 31(@)(@@) % ثناؤك أشهى من لماه إلى فمي % % ولفظك لا حلو الوصال ومره % % 32(@)(@@) % فحسبك من قلبي صفاه ووده % % وحسبك من لفظي دعاه وشكره % % 33(@)(@@) % و حسبك عبد بالجميل ملكته % على أنه مستمجد القلب حره % % 34(@)(@@) % بقيت لداعي المدح وجهك عيده % % وأنمل كفيك الكريمة عشره % % PageV01P852 البحر : - 1(@)(@@) % أما وتلفت الرشاء الغرير % % ولين معاطف الغصن النضير % % 2(@)(@@) % لقد عبثت لواحظه بعقلي % % فياويل الصحيح من الكسير % % 3(@)(@@) % غزال كالغزالة في سناها % % تحجبه الملاحة بالستور % % 4(@)(@@) % شديد الظلم حل صميم قلبي % % كذاك الظلم يوقع في الأسير % % 5(@)(@@) % تبسم ثم حدث باللآلي % % فأعجز بالنظيم وبالنثير % % 6(@)(@@) % وأسكر لحظة من غير ذوق % فيا لله من لحظ سحور % % 7(@)(@@) % وأجفان مؤنثة ولكن % % تقابلنا بأسياف ذكور % % 8(@)(@@) % وخد لاح فيه خيال دمعي % % فقل في الروض والماء النهير % % 9(@)(@@) % شجاني منه أمرد ما شجاني % % وثنى بالعذار فمن عذيري % % 10(@)(@@) % ومن لي فيه من ليل طويل % أكابده ومن جفن قصير % % PageV01P853 11(@)(@@) % لحى الله الوشاة فان تدانو % % ولح الظبي عنا في النفور % % 12(@)(@@) % وعز لقاؤنا والربع دان % كما أبصرت تفليج الثغور % % 13(@)(@@) % فرب دجى لنا فيه عناق % تغوص به القلائد في النحور % % 14(@)(@@) % زمان العيش مبتسم الثنايا % % ووجه الأنس وضاح السرور % % 15(@)(@@) % ووصل معذبي جنات عدن % لباسي فيه ضم كالحرير % % 16(@)(@@) % تروم يداي في خصريه مسرى % ولكن ضاق فتر عن مسير % % 17(@)(@@) % وتعيي الكف عن كشح هضيم % فأرفعها إلى ردف وثير % % 18(@)(@@) % وأستر ثغره باللثم خوفا % على ليلي من الصبح المنير % % 19(@)(@@) % سقى صوب الحيا تلك الليالي % % وإن عوضت بالدمع الغزير % % 20(@)(@@) % وحي منزل اللذات عنا % % وإن لم يمس منا بالعمير % % PageV01P854 21(@)(@@) % وبدرا فائزا بالحسن يحثو % % تراب السبق في وجه البدور % % 22(@)(@@) % يلذ تغزل الأشعار فيه % % لذاذة مدحها في ابن الأثير % % 23(@)(@@) % أغر إذ اجتنى وحبا العطايا % % رأيت السيل يدفع 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms172# من ثبير % % 24(@)(@@) % أخو يومين يوم ندى ضحوك % ويوم ردى عبوس قمطرير % % 25(@)(@@) % يصوب مقلتي كرم وبأس % فيقلع عن فقيد أو عقير % % 26(@)(@@) % كذاك المجد ليس يتم إلا % بمزج العرف فيه والنكير % % 27(@)(@@) % رأيت علي كابن علي قدما % وزيرا جل عن لقب الوزير % % 28(@)(@@) % يسائله عن التمهيد ملك % فيسأل جد مطلع خبير % % 29(@)(@@) % ويبعث كتبه في كل روع % كتائب نقعها شكل السطور % % 30(@)(@@) % فمن دال ومن ألف وميم % كقوس أو كسهم أو قتير % % PageV01P855 31(@)(@@) % كأن طروسه بين الأعادي % % نذير الشيب بالأجل المبير % % 32(@)(@@) % كأن حديثه في كل ناد % حديث النار عن نفس العبير % % 33(@)(@@) % يظل السائدون لدى حماه % % سدى يستأذنون على الحضور % % 34(@)(@@) % مثولا مع ذوي الحاجات منا % % فما يدرى الغني من الفقير % % 35(@)(@@) % إلى أن يرفع الأستار وجه % تراه من المهابة في ستور % % 36(@)(@@) % فمن رفد يفيء لمستميح % ومن رأي يضيء لمستنير % % 37(@)(@@) % ومن حق يساق إلى حقيق % % ومن جدوى تفاض على جدير % % 38(@)(@@) % سجية سابق الطلبات سام % يظل على معاركة الأمور % % 39(@)(@@) % ذكير لا ينقب عن حلاه % % تلقى المجد عن سلف ذكير % % 40(@)(@@) % فإن تحجب فلهجة كل راو % وان تظهر فنصب يد المشير % % PageV01P856 41(@)(@@) % كذا فليحوها قصب المعالي % % سبوق جاء في الزمن الأخير % % 42(@)(@@) % بعيد القدر من آمال باغ % % قريب البر من يد مستمير % % 43(@)(@@) % يهاب سبيل مسعاه المجاري % % كأن الرجل منه على شفير % % 44(@)(@@) % و يرجع بعد جهد عن مداه % % بلا حظ خلا نفس نهير % % 45(@)(@@) % يحدث عن علاه رغيم أنف % % فيتبع ما يحدث بالزفير % % 46(@)(@@) % و كيف ترام غاية ذي علاء % % يرد الطرف منها كالحسير % % 47(@)(@@) % سمي الشكر من هنا وهنا % % ونبت عذراه مثل الشكير % % 48(@)(@@) % مكارم لا تمنع عن طلوب % % كما لمع الصباح لمستنير % % 49(@)(@@) % فلو شاء المشبه قال سحرا % بسرعتها لإخراج الضمير % % 50(@)(@@) % له قلم سري النفع سار % % يبيت على الممالك كالخفير % % PageV01P857 51(@)(@@) % تعلم وهو في الأجمات نبت % سجايا الأسد حتى في الزئير % % 52(@)(@@) % ألم تره إذا اعترضت أمور % ورام الفرس أعلن بالصرير % % 53(@)(@@) % و لثمه المداد لثام ليل % % فأسفر عن سنا صبح منير % % 54(@)(@@) % و أنشأ في الطروس جنان عدن % % فحل بطرسه شرب الخمور % % 55(@)(@@) % و جاوره الحيا المنهل حتى % % تصبب منه كالعرق الدرير % % 56(@)(@@) % تصرف 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms173# حكمه بمنى حكيم % % بأدواء العلى يقظ بصير % % 57(@)(@@) % من القوم الذين لهم صعود % إلى العلياء أسرع من حدور % % 58(@)(@@) % تبيت الناس في سلم وتمسي % % تحارب عنهم كر العصور % % 59(@)(@@) % صدور فيهم لله سر % % كذا الاسرار تودع في الصدور % % 60(@)(@@) % رست أحلامهم وسرت لهاهم % فاكرم بالجبال وبالصخور % % PageV01P858 61(@)(@@) % و لي لفظ رقيق الورد جزل % % كما نبع الزلال من الصخور % % 62(@)(@@) % سما شعري وعاد على علاهم % % فلقبناه بالفلك الأثيري % % 63(@)(@@) % و أحسن ما سرى بيت لطيف % % يصاغ ثناه في بيت كبير % % 64(@)(@@) % أأندى العالمين ندى وأجدى % % على العافين في الزمن العسير % % 65(@)(@@) % عذرنا فيك دهرا زاد حبا % لما ميزت منه على الدهور % % 66(@)(@@) % اذا أحصى الضعيف عليه ذنبا % أتت يمناك بالكرم الغفور % % 67(@)(@@) % و دولة مالك نثلت جفيرا % فكنت أشد سهم في الجفير % % 68(@)(@@) % حميت رواقها وبنيت فيها % % بيمنك كل سطر مثل سور % % 69(@)(@@) % و سكنت البسيطة من هياج % % فما يهنر فرع في دبور % % 70(@)(@@) % و لم يعجزك في الأيام شيء % تحاوله سوى مرأى نضير % % PageV01P859 71(@)(@@) % لتهنك حجة غراء يحلو % % تذكرها على مر الدهور % % 72(@)(@@) % جنيتم كل ضامرة لعيش % % فرار الورق قدام الصقور % % 73(@)(@@) % كأن الأرض تحتكم سماء % تجلت بالأهلة والبدور % % 74(@)(@@) % سرى تطوى به الفلوات طيا % % و نعم الذخر في يوم النشور % % 75(@)(@@) % تقول بطاح مكة يوم لحتم % % ألا لله من وفد جهير % % 76(@)(@@) % ألستم خير من ركب المطايا % % و أعلا القادمين سنا نور % % 77(@)(@@) % يطوف عليكم الرضوان فيها % % طوافكم على البيت الطهور % % 78(@)(@@) % و يعبق بينكم في النحر عرف % كأن المسك بعض دم النحير % % 79(@)(@@) % و تمكث بالحجاز سيول رفد % فما تهفو إلى نوء مطير % % 80(@)(@@) % اذا كرمت مساعي المرء حثت % % لبذل الوفر في جمع الأجور % % PageV01P860 81(@)(@@) % فيا بشرى لمصر وساكنيها % % مصيرك نحوها أزكى مصير % % 82(@)(@@) % و عودك في سما التدبير بدرا % يفرع من ركوب هلال كور % % 83(@)(@@) % و عينا للزمان تجيل رأيا % تبسم عنه أرجاء الثغور % % 84(@)(@@) % أطلت مديحه وأجدت فيه % % وما حابيته وزن النقير % % 85(@)(@@) % و قمت بجاهه أشكو الليالي % % كما تشكو الرعية للأمير % % 86(@)(@@) % و أعجب كيف أظمأ من غمام % % وقد شمل الجليل مع الحقير % % 87(@)(@@) % و كيف ظلاله تسع البرايا % % وشخصي قائم وسط الهجير % % 88(@)(@@) % و ما في 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms174# السحب مثل ندى يديه % % ولا في الأرض مثلي من شكور % % 89(@)(@@) % رعاك الله دارك شكو عبد % تمسك منك بالعدل السفير % % 90(@)(@@) % فمثلك من أغاث حليف بيت % فأحيي بعض سكان القبور % % PageV01P861 91(@)(@@) % ولا تنظر إلى حقي ولكن % % إلى مافيك من كرم وخير % % 92(@)(@@) % أتيتك محرما من كل صنع % فدم يا كعبة للمستجير % % 93(@)(@@) % و جمع في زمانك كل عصر % % كجمع العام أفراد الشهور % % PageV01P862 البحر : - 1(@)(@@) % تذكرت مصرا والاخلاء والدهرا % % سقى الله ذاك السفح والناس والعصرا % % 2(@)(@@) % وقالت ظنوني في الشآم ادع لذة % فقال لها ماضي الزمان اهبطوا مصرا % % 3(@)(@@) % تقول أناس ان جلق جنة % فما بال أحشاء الغريب بها حرى % % 4(@)(@@) % بروحي فتان اللواحظ أغيد % % شديد التجني ما أضر وما أضرى % % 5(@)(@@) % من الغيد يحمي لحظ عينيه ثغره % % ولم أر سيفا وحده قد حمى ثغرا % % 6(@)(@@) % تثنى قضيبا فاح مسكا رنا طلا % سطا أسدا غنى حماما بدا بدرا % % 7(@)(@@) % وصيرني الواشون حتى حذرتهم % % فها أنا مقتول على حبه صبرا % % 8(@)(@@) % أحاكي حباب البابلي وتغره % % بدمعي واللفظ الجمالي والدرا % % 9(@)(@@) % رئيس محا وزر الزمان بجوده % % وشد لأبناء الرجا مئزرا إزرا % % 10(@)(@@) % اذا ما رأيت الدهر يلهب تارة % % فقل يا لابراهيم تأمن به الدهرا % % PageV01P863 11(@)(@@) % ولذ بحماه للمكارم والهدى % % تجد علمه يقري وأضيافه تقرى % % 12(@)(@@) % ومعدن خير بالفضائل والهدى % % لطلابه يهدي الجواهر والنثرا % % 13(@)(@@) % بفضل يديه أو بفضل دعائه % % تشيم وتستسقي الغمائم والقطرا % % 14(@)(@@) % وقال أناس جاوز الشعر قدره % % فقلت نعم والله قد جاوز الشعرى % % 15(@)(@@) % ألا أيها المجري له اللوم في الندى % % لقد جئت شيئا في مسامعه نكرا % % 16(@)(@@) % سري سما للفضل والناس هجد % % فسبحان من بابن السيادة قد أسرى % % 17(@)(@@) % له قلم جاوز الغيث فاغتدى % % ينمق في أرجاء مهرقه الزهرا % % 18(@)(@@) % ويبعث من دهم السطور إلى العلى % % محجلة في طي أدراجه غرا % % 19(@)(@@) % زهى غصنه حتى اذا خيفت الوغى % % رنا وانثنى كالسيف والصعدة السمرا % % 20(@)(@@) % بيمن امريء أحيي به ميت الرجا % % وبدل عسر الحادثات لنا يسرا % % PageV01P864 21(@)(@@) % وما فيه من عيب يعد لعائب % % سوى أنه بالجود يستعبد الحرا % % 22(@)(@@) % ولله سر في معاليه مودع % و لا عجب للسر يستودع الصدرا % % 23(@)(@@) % أمولاي لي قصد تخطى لك الورى % % كما يتخطى 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms175# الليل من يطلب الفجرا % % 24(@)(@@) % فدونك آمالا قديما رجاؤها % % ودونك من نظم الثنا غادة عذرا % % 25(@)(@@) % تناهى الحيا وقتا وغالبها الجوى % % فجاءت تعد السهل نحوك والوعرا % % 26(@)(@@) % وتشكو عقوق المعرضين وبخلهم % % اليك فتلقى عندك البر والبحرا % % PageV01P865 البحر : - 1(@)(@@) % خدمتك في فلك الثنآء الدائر % % غرر النجوم بكل معنى باهر % % 2(@)(@@) % يا شائد الحرمين بالهمم التي % % ملأ الحديث بها لسان الذاكر % % 3(@)(@@) % شيدت ما يبقى ويسري ذكره % % في الأرض فاعجب للمقيم السائر % % 4(@)(@@) % وعمرت فيها كل بيت عبادة % % فأتى المديح بكل بيت عامر % % 5(@)(@@) % قسما لو أن الفضل مثلك صورة % لحللت منها في مكان الناظر % % 6(@)(@@) % أنت الذي حف المحاسن فضله % % فأصاب باطن فضله للظاهر % % 7(@)(@@) % فطرت أفواه الصام تقربا % ورميت أكباد العداة بفاطر % % 8(@)(@@) % ورفعت للوفد الدخان من القرى % % ولقيت ذنب المخطئين بغافر % % 9(@)(@@) % فتهن بالعيد السعيد ممتعا % بذخائر التقوى وأي ذخائر % % 10(@)(@@) % لولاك لم يك للرجا من قوة % % يلقى الزمان بها ولا من ناصر % % PageV01P866 11(@)(@@) % فوحق جود يديك لولا أنت ما % % سميت نفسي الآن باسم الشاعر % % 12(@)(@@) % لكن نثرت مكارما نظمتها % % مدحا فبلغ ناظم عن ناثر % % 13(@)(@@) % جوزيت عني بالثناء كما جزى % % نفس الرياض ندى الغمام الباكر % % 14(@)(@@) % إن حدثت بك حالتي عن واصل % % فلقد تحدث مهجتي عن جابر % % 15(@)(@@) % يا من حمدت إلى حماه محاجرا % سلكت ولو أني سلكت محاجري % % 16(@)(@@) % خذها اليك بديهة نزهتها % % عن قامة سمرا ولحظ فاتر % % 17(@)(@@) % ظهرت مناقبك الحسان فجئتها % % من وصف سؤددها بلفظ ظاهر % % 18(@)(@@) % ودنا بها سهل المديح فلم أقل % % كم بين أكناف العذيب وحاجر % % PageV01P867 البحر : - 1(@)(@@) % الله جارك إن دمعي جاري % % يا موحش الأوطان والأوطار % % 2(@)(@@) % لما سكنت من التراب حديقة % % فاضت عليك العين بالأنهار % % 3(@)(@@) % شتان ما حالي وحالك أنت في % % غرف الجنان ومهجتي في النار % % 4(@)(@@) % خف النجا بك يا بني إلى السرى % % فسبقتني وثقلت بالأوزار % % 5(@)(@@) % ليت الردى إذ لم يدعك أهاب بي % % حتى ندوم معا على مضمار % % 6(@)(@@) % ليت القضا الجاري تمهل ورده % % حتى حسبت عواقب الإصدار % % 7(@)(@@) % ما كنت إلا مثل لمحة بارق % % ولي وأغرى الجفن بالإمطار % % 8(@)(@@) % أبكيك مابكت الحمام هديلها % % وأحن ما حنت إلى الأوكار % % 9(@)(@@) % أبكي بمحمر الدموع وانما % % تبكي العيون نظيرها بنضار 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms176# % % 10(@)(@@) % قالوا صغيرا قلت إن وربما % % كانت به الحسرات غير صغار % % PageV01P868 11(@)(@@) % وأحق بالأحزان ماض لم يسيء % % بيد ولا لسن ولا إضمار % % 12(@)(@@) % نائي اللقا وحماه أقرب مطرحا % % يا بعد مجتمع وقرب مزار % % 13(@)(@@) % لهفي لغصن راقني بنباته % % لو أمهلته الترب للإثمار % % 14(@)(@@) % لهفي لجوهرة خفت فكأنني % % حجبتها من أدمعي ببحار % % 15(@)(@@) % لهفي لسار حار فيه تجلدي % % واحيرتي بالكوكب السيار % % 16(@)(@@) % سكن الثرى فكأنه سكن الحشا % % من فرط ما شغلت به أفكاري % % 17(@)(@@) % أعزز علي بأن ضيف مسامعي % % لم يحظ من ذاك اللسان بقاري % % 18(@)(@@) % أعزز علي بأن رحلت ولم تخض % % أقدام فكرك أبحر الأشعار % % 19(@)(@@) % أعزز علي بأن رفقت على الردى % % وعليك من دمعي كدر نثار % % 20(@)(@@) % أبني ان تكس التراب فانه % % غايات أجمعنا وليس بعار % % PageV01P869 21(@)(@@) % مافي زمانك ما يسر مؤملا % فاذهب كما ذهب الخيال الساري % % 22(@)(@@) % لو أن أخباري اليك توصلت % % لبكيت في الجنات من أخباري % % 23(@)(@@) % أحزان مدكر ووحشة مفرد أنبي اني قد كنزتك في الثرى فانفع أباك بساعة الإقتار % % ومقام مضيعة وذل جوارسقط بيت ص % % 24(@)(@@) % أبني قد وقفت علي حوادث % فوقفن من طلل على آثار % % 25(@)(@@) % ومضى البياض من الحياة وطيبها % % لكنها أبقته فوق عذاري % % 26(@)(@@) % نم وادعا فلقد تقرح ناظري % % سهرا ونامت أعين السمار % % 27(@)(@@) % أرعى الدجى وكأن ذيل ظلامه % % متشبث بالنجم في مسمار % % 28(@)(@@) % خلع الصباح على المجرة سجفه % % أم قسمت شمس النهار دراري % % 29(@)(@@) % أم غاب مع طفل أخير دجنتي % % لا كوكبي فيها ولا أسحاري % % 30(@)(@@) % تبا لعادية الزمان على الفتى % % فلقد حذرت وما أفاد حذاري % % PageV01P870 31(@)(@@) % وحويت دينارا لوجهك فانتحى % % صرف الزمان فراح بالدينار % % 32(@)(@@) % أبني ان تبعد فان مدى اللقا % % بيني وبينك مسرع التيار % % 33(@)(@@) % ان تسقني في الحشر شربة كوثر % فلقد سقتك مدامعي بغزار % % 34(@)(@@) % كيف الحياة وقد دفنت جوانحي % % ما بين أنجاد إلى أغوار % % 35(@)(@@) % وحوى نبي تراب مصر وجلق % % كالغيم مرتكنا على أقمار % % 36(@)(@@) % طرقت على تلك النفوس طوارق % % وطرت على تلك الجسوم طواري % % 37(@)(@@) % وبدت لدى البيدا مطي قبورهم % % علما بأنهم على أسفار % % 38(@)(@@) % قسما بمن جعل الفناء مسافة % % إنا على خطر من الأخطار % % 39(@)(@@) % قل للذين تقدمت أمثالهم % % أين الفرار ولات حين فرار % % 40(@)(@@) % ما 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms177# بين أشهب للظلام معاود % % ركضا وأدهم للدجى كرار % % PageV01P871 41(@)(@@) % يطأ الصغير ومن يعمر يلتحق % % وعليه من شيب كنقع غبار % % 42(@)(@@) % مالي وعتب الشهب في تقديرها % % ولقد تصاب الشهب بالأقدار % % 43(@)(@@) % لاعقرب الفلك اللسوب من الردى % % ينجو ولا أسد البروج الضاري % % 44(@)(@@) % يرمي الهلال بقوسه أرواحنا % % ولقد يصاب القوس بالأوتار % % 45(@)(@@) % كتب الفنآء على الشواهد حجة % % غنيت عن الأقرار والانكار % % 46(@)(@@) % فلتظهر الفطن الثواقب عجزها % % فظهوره سر من الاسرار % % 47(@)(@@) % وليصطبر متفجع فلربما % % فقد المنى ومثوبة الصبار % % 48(@)(@@) % أين الملوك الرافلون إلى العلى % % عثروا إلى الأجداث أي عثار % % 49(@)(@@) % كانوا جبالا لا ترام فأصبحوا % % بيد الردى حفنات ترب هار % % 50(@)(@@) % أين الكماة إذ العجاجة أظلمت % % قدحوا القسي وناضلوا بشرار % % PageV01P872 51(@)(@@) % سلموا على عطب الوغى ودجى بهم % % داجي المنون إلى محل بوار % % 52(@)(@@) % أين الأصاغر في المهود كأنما % % ضمت كمائمها على أزهار % % 53(@)(@@) % خلط الحمام عظامهم ولحومهم % % حتى تساوى الدر بالاحجار % % 54(@)(@@) % فلئن صبرت ففي الأولى متصبر % ولئن بدا جزعي فعن أعذار % % 55(@)(@@) % درت عليك من الغمام مراضع % وتكنفتك من النجوم جوار % % 56(@)(@@) % تسقي ثراك وليس ذاك بنافعي % % لكن أغالط مهجتي وأداري % % PageV01P873 البحر : - 1(@)(@@) % على مثلها فلتهم أعيننا العبرى % % وتطلق في ميدانها الشهب والحمرا % % 2(@)(@@) % فقدنا بني الدنيا فلما تلفتت % % وجوه أمانينا فقدنا بني الأخرى % % 3(@)(@@) % لفقدك إبراهيم أمست قلوبنا % % مؤججة لا برد في نارها الحرى % % 4(@)(@@) % وأنت بجنات النعيم مهنأ % % بما كنت تبلى في تطلبه العمرا % % 5(@)(@@) % عريت وجوعت الفؤاد فحبذا % % مساكن فيها لاتجوع ولا تعرى % % 6(@)(@@) % بكى الجامع المعمور فقدك بعد ما % % لبثت على رغم الديار به دهرا % % 7(@)(@@) % وفارقته بعد التوطن ساريا % إلى جنة المأوى فسبحان من أسرى % % 8(@)(@@) % كأن مصابيح الظلام بأفقه % % لفقدك نيران الصيابة والذكرى % % 9(@)(@@) % كأن محاريب القيام بصدره % % لفرقة ذاك الصدر وقد قوست ظهرا % % 10(@)(@@) % مضيت وخلفت الديار وأهلها % % بمضيعة تشكو الشدائد والوزرا % % PageV01P874 11(@)(@@) % فمن لسهام الليل بعدك انها % % معطلة ليست تراش ولا تبرى % % 12(@)(@@) % ومن لعفاف عن ثرا وبني الورى % % عبيد الأماني وانثنيت به حرا % % 13(@)(@@) % سيعلم كل من ذوي المال في غد % اذا نصب الميزان من يشتكي الفقرا % % 14(@)(@@) % عليك سلام الله من متيقظ % صبور اذا لم يستطع بشر صبرا % % 15(@)(@@) % ومن ضامر الكشحين 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms178# يسبق في غد % % إلى غاية من أجلها تحمد الضمرا % % 16(@)(@@) % أيعلم ذو التسليك أن جفوننا % % على شخصه النائي قد انتثرت درا % % 17(@)(@@) % وان الأسى كالحزن قد جال جولة % فما أكثر القتلى وما أرخص الاسرى % % 18(@)(@@) % الا رب ليل قد حمى فيه من وغى % % حمى الشام والأجفان غافلة تكرى % % 19(@)(@@) % اذا ضحك السمار حجب ثغره % % كذلك يحمي العابد الثغر والثغرا % % 20(@)(@@) % إلى الله قلبا بعده في تغابن % إلى أن رأى صف القيامة والحشرا % % PageV01P875 21(@)(@@) % لقد كنت ألقاه وصدري محرج % % فيفتح لي يسرا ويشرح لي صدرا % % 22(@)(@@) % و ألثم يمناه وفكري ظامئ % % كأني منها ألثم الوابل الغمرا % % 23(@)(@@) % أمولاي أني كنت أرجوك للدعا % % فلا تنسني بالخلد في الدعوة الكبرى % % 24(@)(@@) % سقى القطر أرضا قد حللت بتربها % % و ان كنت استسقي برؤيتك القطرا % % 25(@)(@@) % و من كان يرجى منه في المدح أجرة % % فاني أرجو في مدائحك الأجرا % % PageV01P876 البحر : - 1(@)(@@) % أطلق دموعك ان القلب معذور % % وانه بيد الأحزان مأسور % % 2(@)(@@) % وخل عينيك يهمي من مدامعها % % در على كاتب الانشاء منثور % % 3(@)(@@) % يسوءني ويسوء الناس أجمع يا % % بيت البلاغة ان البيت مكسور % % 4(@)(@@) % في كل يوم برغمي عن منازلكم % % ينآى ويذهب محمود ومشكور % % 5(@)(@@) % خبا الشهاب فقلنا الشمس فاعترضت % % أيدي الردى فزمان الانس ديجور % % 6(@)(@@) % آها لمنظر شمس لا يدوم له % % بالسعي في فلك العلياء تيسير % % 7(@)(@@) % كانت تفتح نور اللفظ فكرته % % حتى استجن فلا نور ولا نور % % 8(@)(@@) % مطهر الذات مطويا على كرم % ينسي عهود الغوادي وهو مذكور % % 9(@)(@@) % لهفي عليه لود لا يغيره لهفي عليه لجود لا تكدرهقضية ولبعض الجود تكدير % % رفع المحل وللسادات تغييرسقط بيت ص % % 10(@)(@@) % لهفي عليه لأخلاق مهذبة % سعي الثناء بها والأجر مبرور % % PageV01P877 11(@)(@@) % لهفي عليه لأقلام ثوت ولها % % يمن على صفحات الملك مشهور % % 12(@)(@@) % تواضع لاسمه منه ازدياد على % وفي التكبر للأسماء تصغير % % 13(@)(@@) % وهمة بين خدام العلى نشأت % % فاللفظ والعرض ريحان وكافور % % 14(@)(@@) % لاعيب فيه سوى فكر عوائده % % للحمد رق وللألفاظ تحرير % % 15(@)(@@) % حتى إذا لاح مرفوعا مدائده % % وراح ذيل علاه وهو مجرور % % 16(@)(@@) % تخيرته أكف الموت عارفة % % بنقده وتنقته المقادير % % 17(@)(@@) % ما أعجب الدهر في حالي تقلبه % % رصل وصد وتعريف وتنكير % % 18(@)(@@) % كأنما نحن 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms179# والأوقات في حلم % مخيل وكأن الموت تعبير % % 19(@)(@@) % بين الفتى راتع في الأمن اذ برزت % % من المنون له غلب مغاوير % % 20(@)(@@) % والمرء في الاصل فخار ولا عجب % % إن راح وهو بكف الدهر مكسور % % PageV01P878 21(@)(@@) % جادت ضريحك شمس الدين سحب ندى % % يمسي صداك لديها وهو مسرور % % 22(@)(@@) % ان يمس شخصك مطويا بملحده % % فإن ذكرك بالأحسان منشور % % 23(@)(@@) % أو يغد بيتك يشكو للزمان وغى % % فإنه ببقاء السيف منصور % % PageV01P879 البحر : - 1(@)(@@) % لو لم تفه برثاء فيك أشعاري % % رثاك بالدر عني دمعي الجاري % % 2(@)(@@) % ياساكن الخلد أورثت الورى حرقا % فأنت في جنة والقوم في نار % % 3(@)(@@) % جاورت ربك في الجنات مقتربا % لقد تعوضت عن جار وعن دار % % 4(@)(@@) % أرقد هنيئا فلا سهد بممتنع % منا عليك ولا قلب بصبار % % 5(@)(@@) % ما أنس برك للقصاد متصلا % أيام لا قاصد يحظى بأنصار % % 6(@)(@@) % ماأنس رفدك للزوار محتفلا % حيث الغريب على أيامه زاري % % 7(@)(@@) % ما أنس شخصك في الحفل العلي كما % % أربت ذكاء على شهب وأقمار % % 8(@)(@@) % ماأنس يمناك تسدي الفضل كاتمة % % للفضل حتى كأن الفضل كالعار % % 9(@)(@@) % ما أنس أقلامك اللاتي بها ابتدرت % % على الحقيقة تهوى طاعة الباري % % 10(@)(@@) % لهفي عليك لملهوف ومغترب % % سلاه قربك عن قوم وعن دار % % PageV01P880 11(@)(@@) % لهفي عليك لألفاظ موشعة % % يشدو بها الحي أو يحدو بها الساري % % 12(@)(@@) % بكى لفقدك محراب كأن سنا % % مصباحه في حشاه نار تذكار % % 13(@)(@@) % و مصحف بات يشكو قلبه أسفا % مقسما بين أجزاء وأعشار % % 14(@)(@@) % ومدرج كان فيه الدر منتظما % على ترائب أسماع وأبصار % % 15(@)(@@) % و قصة كان فيها غوث مرتقب % % على يديك ويسر بعد إعسار % % 16(@)(@@) % و مجمع كنت فيه من ندى وتقي % % أحق أن تتسمى ابن دينار % % 17(@)(@@) % لا تبعدن فكم أبقيت منقبة % % كالغيث ولى وأبقى فضل آثار % % 18(@)(@@) % ان ارتحلت فبر جد مقترب % % و إن ثويت فذكر جد سيار % % 19(@)(@@) % ما أغفل الناس عن هذا وأذهلهم % % عن مورد ما له عهد بإصدار % % 20(@)(@@) % قبر يشاد وآجال محكمة % واقلة الحول في حجر وأحجار % % PageV01P881 21(@)(@@) % و طالب من غريم الموت يرصدنا % % و نحن في هم إقلال واكثار % % 22(@)(@@) % بين الفتى راتع بالأمن إذ برزت % % أهلة بالمنايا ذات اظفار % % 23(@)(@@) % كأن كل هلال في مطالعه % % قوس 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms180# يطالب أرواحا بأوتار % % 24(@)(@@) % أين الأولى أدركوا ما أدركوا وثووا % % رهائنا بين أجداث وأطمار % % 25(@)(@@) % أين العلاء الذي كانت مآثره % % بين الملائك تستملى بأسمار % % 26(@)(@@) % أين الذي كنت آوي من عواطفه % % إلى ظلال من النعمى وأثمار % % 27(@)(@@) % أصبحت أرتع من آثار نعمته % % و أدمعي بين جنات وأنهار % % 28(@)(@@) % يا ابن النبي عزاء ان بدا كدر % فانها عادة من هذه الدار % % 29(@)(@@) % للماء والطين أصل المرء منتسب % فكيف ننكر أن يرثى بأكدار % % 30(@)(@@) % أقول هذا كأني عنه مصطبر % و الله يعلم ما في طي إضماري % % PageV01P882 البحر : - 1(@)(@@) % برغم العلى تاج تحلى به الثرى % % وكانت ثراه هامة السحب في الذرا % % 2(@)(@@) % وكان عليه جوهر الذكر أبيضا % فزاوجت فيه جوهر الدمع أحمرا % % 3(@)(@@) % وكنت أرى عيشي مناما بقربه % % فيا أسفي بالبعد كيف تفسرا % % 4(@)(@@) % وأجريت دمعا كان يحسب فقده % % زمانا لسوء الحظ لي وكذا جرى % % 5(@)(@@) % بروحي الأولى أفناهم الدهر مبقيا % ببعدهم هما من الخطب أكبرا % % 6(@)(@@) % سقانا بكأس قد سقاهم بمثلها % % ولكنهم كانوا على الموت أصبرا % % 7(@)(@@) % ألا في سبيل الله سار للحده % % وفي كل أفق ذكر علياه قد سرى % % 8(@)(@@) % حميد المساعي كيفما حل بلدة % % غدت بلدة فوق السماء وأزهرا % % 9(@)(@@) % مضى طاهر الآثار في كل منزل % % ألذ من الماء الزلال وأطهرا % % 10(@)(@@) % عفيف السجايا باسط اليد بالندى % % وان كان الا من غنى النفس مقترا % % PageV01P883 11(@)(@@) % يطوف بعلياه الثناء محلقا % وان كان عن أدنى مداه مقصرا % % 12(@)(@@) % ويهتز للذكر الجميل كأنه % % وحاشا بقاه قد تناول مسكرا % % 13(@)(@@) % ويظهر مجدا والتعبد قبله % % وانا لنرجو فوق ذلك مظهرا % % 14(@)(@@) % أتى الشام من مصر ولم نر مثله % % غماما أتى من مصر للشام ممطرا % % 15(@)(@@) % فنور مرعى القاصدين وسبلهم % % فيالك في الحالين روضا منورا % % 16(@)(@@) % ومد يد النعمى إلى كل فضة % % دنا ورق منها اليه فأثمرا % % 17(@)(@@) % وقابل أسرار الملوك بصدره % % وأورد عنهم باليراع وأصدرا % % 18(@)(@@) % وأخدمهم من رأيه ومداده % % صوابا كما ترضى الملوك وعنبرا % % 19(@)(@@) % وصان حمى الاسلام بالقلم الذي % % إذا مد حبرا خلت درا محبرا % % 20(@)(@@) % ونظم أسلاك السطور فحليت % % من التاج أجياد الممالك جوهرا % % PageV01P884 21(@)(@@) % وصادفني في معشر بديارهم % % بعيدا من الحيين دارا ومعشرا % % 22(@)(@@) % فكمل منقوصا من اسمي لديهم % % وعرفني 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms181# فيهم وكنت منكرا % % 23(@)(@@) % ويسر من رزقي بيمن بنانه % % فيمن ماشاءت يداه ويسرا % % 24(@)(@@) % وحاول جبري رأفة وتعطفا % % وقد كان جمع المال جمعا مكسرا % % 25(@)(@@) % وأثنى على جهدي بما هو أهله % % وأظهر أفعال الجميل وأضمرا % % 26(@)(@@) % فما لي لا أثني على جود كفه % % لدي كما أثنى على المطر الثرى % % 27(@)(@@) % وأبكي بلفظ من رثاء وأدمع % % منظم در تارة ومنثرا % % 28(@)(@@) % على ذاهب قد كان للقصد ملجأ % % وللظن مرتادا وللعين منظرا % % 29(@)(@@) % وعاد إلى جنات عدن تزينت % % ونحن إلى نيران حزن تسعرا % % 30(@)(@@) % فلهفي على دنيا العفاة تنكرت % % ولهفي على ربع السماحة اقفرا % % PageV01P885 31(@)(@@) % ولهفي على بيت السيادة والتقى % % ولهفي على حي القراءة والقرى % % 32(@)(@@) % ولهفي على حكم تحف بلينه % % بوادر تحمي صفوه ان يكدرا % % 33(@)(@@) % ولهفي على رأي يضيء به الهدى % % اذا النجم في أفق السماء تحيرا % % 34(@)(@@) % ولم أنس مسرى نعشه يوم جمعة % % تجمع هما كالخميس اذا سرى % % 35(@)(@@) % ولهفي على جار من الجود طالما % % جرى معه صوب الحيا فتعطرا % % 36(@)(@@) % وقد وعظتنا الحال منه كأنه % % خطيب رقي من صهوة النعش منبرا % % 37(@)(@@) % مواعظ من حيث السكوت وانها % % لأبلغ من نطق الفصيح اذا انبرى % % 38(@)(@@) % كأن لم يسر والكاتبون أمامه % % يجهز وفدا أو يجهز عسكرا % % 39(@)(@@) % كأن لم يجل يومي وغى وسماحة % % يراعا كما سل القضيب وأزهرا % % 40(@)(@@) % كأن لم يهز القصد منه شمائلا % ولا قلما يعزى إلى الخضر أخضرا % % PageV01P886 41(@)(@@) % على مثل هذا شارط الدهر أهله % % إذا سر أبكى أو إذا ود غيرا % % 42(@)(@@) % فمن سبر الأحوال لم يعتجب لها % % من عرف الأيام لم ير منكرا % % 43(@)(@@) % ومن ناله صبح المشيب ولم يفق % % إلى طلب الاخرى فما هب من كرى % % 44(@)(@@) % كما طلب ابن الخضر دار مقامه % % فغلس في بغيا النعيم وبكرا % % 45(@)(@@) % وما ترك ابن الخضر ميراث واجد % سوى الذكر فياحا أو الأجر نيرا % % 46(@)(@@) % وأعناق أحرار تملك رقها % % وأحوال قوم قبل ما مات دبرا % % 47(@)(@@) % عليك سلام الله من مترحل % % نخي رت قدما وده وتخيرا % % 48(@)(@@) % فألبسني ثوب الولاء معتقا % والبسته ثوب الثناء محررا % % PageV01P887 البحر : - 1(@)(@@) % يا سيدي جاءتك في صدرها % % كأنها روحي في صدري % % 2(@)(@@) % كنافة بالحلو موعودة % % كما تقول العسل المصري % % 3(@)(@@) % قد 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms182# خنقتني عبرتي كاسمها % % وبادرت من خلفها تجري % % 4(@)(@@) % ما خرج الفستق من قشره % % فيها وقد أخرجت من قشري % % 5(@)(@@) % ونشرها من طيبها لم يفح % % فاعجب لسوء الطي والنشر % % 6(@)(@@) % فهاك حلوا قد تكفلته % % ولا تسل عني وعن صبري % % 7(@)(@@) % كأنها الدمية لكنها % % لا نفحة العرف ولا القطر % % 8(@)(@@) % لازلت في الدهر كما تبتغي % % وفوق ماتبغي من الدهر % % PageV01P888 البحر : - 1(@)(@@) % لا تخش من غم كغيم عارض % % فلسوف يسفر عن اضاءة بدره % % 2(@)(@@) % ان تمس عن عباس حالك راويا % فكأنني بك راويا عن بشره % % 3(@)(@@) % ولقد تمر الحادثات على الفتى % % وتزول حتى ما تمر بفكره % % 4(@)(@@) % وهو الزمان إذا جنى لم يعتذر % % ويقوم من خلف الأذان بعذره % % 5(@)(@@) % هون عليك فرب خطب هائل % % دفعت قواه بدافع لم تدره % % 6(@)(@@) % ولرب ليل في الهموم كدمل % % صابرته حتى ظفرت بفجره % % 7(@)(@@) % ولربما يجني الزمان على امرىء % مجنى ويا عجبا حلاوة صبره % % 8(@)(@@) % ولربما أصبحت قاضي معشر % % فاصبر على حلو الزمان ومره % % PageV01P889 البحر : - 1(@)(@@) % وغيداء يعزى طرفها لكنانة % ومعطفها المياد يعزى إلى النضر % % 2(@)(@@) % حمت ثغرها عن راشف بلحاظها % % كذاك سيوف الهند تحمي حمى الثغر % % 3(@)(@@) % كأن جفوني حين تسفح بالبكى % % على حبها كف المؤيد بالتبر % % 4(@)(@@) % رعى الله أيام المؤيد إنها % % ولا برحت فينا مواسم للدهر % % 5(@)(@@) % مليك تساوى علمه ونواله % % كأنهما بحران جاآ على بحر % % 6(@)(@@) % مليك العلي بشراك بالعيد مقبلا % % وبشرى الورى من سحب كفيك بالعشر % % 7(@)(@@) % وهنئت بالفطر الذي قام ناحرا % عداتك حتى أشكل الفطر بالنحر % % PageV01P890 البحر : - 1(@)(@@) % يا سيدي لك نظم في محاسنه % % لمح من الزهر أو نفح من الزهر % % 2(@)(@@) % وصحبة ما تأملنا فضائلها % % إلا روينا حديث الفضل عن عمر % % 3(@)(@@) % من كل بحر قريض أنت وارده % % تجلو على الناس أنواعا من الدرر % % 4(@)(@@) % وكل أفق ودار أنت طالعه % % تضيء ما شئت من شمس ومن قمر % % 5(@)(@@) % لكنني أشتكي حالا يبيت بها % % فكري على الهم أوجفني على السهر % % 6(@)(@@) % أخجلتني بقريض كان غايته % % ان أخبر الناس عن فقري وعن حصري % % 7(@)(@@) % لا ثروة المال في كفي قاضية % حقا ولا ثروة الأشعار في فكري % % 8(@)(@@) % فاصرفه عني على الاكفاء وابق على % % ما بيننا من صفاء الود واقتصر % % PageV01P891 البحر 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms183# : - 1(@)(@@) % لقد نفر الحسناء شيبي فأصبحت % % على كبري بعد الوداد تكبر % % 2(@)(@@) % وقد كنت بالغيد الحسان مشببا % فها أنا للغيد الحسان منفر % % 3(@)(@@) % وقد نفرت حتى عن الشعر صبوتي % % ولولا الثنا التاجي ما كنت أشعر % % 4(@)(@@) % أيا من ذكرنا الشافعي وحاتما % بآلائه والشيء بالشيء يذكر % % 5(@)(@@) % وتاجا على رأس السيادة يجتلى % % فينظم در المدح فيه وينثر % % 6(@)(@@) % مزجنا بحور الفضل والشعر بيننا % % فها نحن في هذا وذا نتبختر % % 7(@)(@@) % لعمري لقد قلت الرقيق لمدحه % % وان رقيقا قلته لمحرر % % PageV01P892 البحر : - 1(@)(@@) % أواه من جائزة جاره % % فتانة الألحاظ سحاره % % 2(@)(@@) % ان اصبحت للعهد نباذة % % فعينها للعقل خماره % % 3(@)(@@) % كأنها في السحر باللحظ من % % لفظ شهاب الدين ممتاره % % 4(@)(@@) % والفضل واللفظ الرفيع الذي % % من دارة البدر انثنى داره % % 5(@)(@@) % منظرة ما بين زهر الدجى % % أخبارها في الفضل طياره % % 6(@)(@@) % يا نائيا أسطره قد نأت % % فوحشة المشتاق كراره % % 7(@)(@@) % باب البريد افتح بكتب فلي % % عين بدمع الشوق فواره % % PageV01P893 البحر : - 1(@)(@@) % على حركات اليمن والأمن والهنا % % سكنت بدار العلم والحلم والقرى % % 2(@)(@@) % وعمرتها يا عمرك الله للعلى % % فعش مثلها عالي المنار معمرا % % 3(@)(@@) % تبادرها الطلاب علما وأنعما % فتحمد عند الصبح من بشرك السرى % % 4(@)(@@) % وتزداد بالترخيم حينا خلاف ما % % يقاس وترضي الوفد وردا ومصدرا % % 5(@)(@@) % وتذكرك الجنات بالنسك والتقى % % بشيران بالإحسان والعدل في الورى % % 6(@)(@@) % لقد زادها في الحمد يوسف فاغتدت % % تباع بمرآها القلوب وتشترى % % 7(@)(@@) % وما هي إلا جنة بدليل ما % % وصفت وقلبي عاشق قبل أن يرى % % PageV01P894 البحر : - 1(@)(@@) % يا طرس قبل ثرى الباب العلي وقل % % مولاي لا زلت تولي الخير مستورا % % 2(@)(@@) % جاها ومالا كما عودت من قدم % إنسان من لم يكن من قبل مذكورا % % 3(@)(@@) % جاء العيال وذات البين قالبة % % بالبعد تجعل بيت القلب مكسورا % % 4(@)(@@) % وكل من شئت أو من لم أشأ بعثت % % لهم صلاتك مخفيا ومشهورا % % 5(@)(@@) % حتى الأجانب زادوا ضعف عائلتي % % وربة البيت أضحت بينهم بورى % % 6(@)(@@) % وكنت أرجو صواب القصد يحضرها % % لاهم فبالي قلب ليس مسرورا % % 7(@)(@@) % وأخر البعد إنهاء الشكاة حيا % وربما زاد سوء الحظ تأخيرا % % PageV01P895 البحر : - 1(@)(@@) % خليلي عن حال المحبين سل فما % % ينبيك بالأحوال مثل خبير % % 2(@)(@@) % فريقان هذا في الوصال بجنة % وهذا كمثلي في 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms184# الجفا بسعير % % 3(@)(@@) % وسل في التقى عن مثل كافور مصره % % يبشرك ذكرى وقتنا لبشير % % 4(@)(@@) % أمير على السادات أي مقدم % وفي واجب المداح أي كبير % % 5(@)(@@) % لو انك قابلت النجوم بقدره % % لألفيته قد جازها بكثير % % 6(@)(@@) % اذا بشر الانسان في الحين مرة % % على وجه وضاح الهلال منير % % 7(@)(@@) % فيا رب خلد ملك من لحظ طرفه % % يرى كل يوم منه وجه بشير % % PageV01P896 البحر : - 1(@)(@@) % قدم الحبيب من السفر % % أرأيت بدرا قد سفر % % 2(@)(@@) % بدر يقر العين ل % % كن ما على وجه أثر % % 3(@)(@@) % كسناء نور الدين ذي الأ % % فضال والفضل الأغر % 4(@)(@@) % دمتم بني حجر الكراعم لكم فخار معتبرص أهل المعالي والعلو سقط شطرين ص % % م لمن وعى ولمن نظر % % 5(@)(@@) % والنسبة العلياء قد % % شيدت بأبناء أخر % % 6(@)(@@) % شيم زكت من أول % وسعادة لحظت حجر % % PageV01P897 البحر : - 1(@)(@@) % تهن به عيدا أجل كبيرا % % غدوت به للسائدين أميرا % % 2(@)(@@) % وعش بين عيد بالحجاز مهنئا % وعيد على أوطان مصر قريرا % % 3(@)(@@) % لقد عشت نور الدين في أفق العلى % % وفي العلم والفضل البهي شهيرا % % 4(@)(@@) % ووفيتني حق الجوار يكاد أن % % يكون من الحظ الحرون مجيرا % % 5(@)(@@) % لغلمان مولانا علي مودة % ينقصها بعض الأمور يسيرا % % 6(@)(@@) % لئن خدموني خدمة مستجادة % % لقد بخلت بخلا علي كثيرا % % 7(@)(@@) % ينفر من قد عطفته كأنما % % تصحف لي معنى السرور شرورا % % PageV01P898 البحر : - 1(@)(@@) % في دعة الله سر وعد في % % بشارة تجتلي بشاره % % 2(@)(@@) % واحيي كما شئت يا ابن يحيى % % في رتب البر والاشاره % % 3(@)(@@) % مكان عبد الرحيم قدما % لا ترتضي النعت بالوزاره % % 4(@)(@@) % لي قصة والسؤال سكني % % بيت ويحتاج للعباره % % 5(@)(@@) % سكنت دارا لصاحب لي % % وقصده يستعير داره % % 6(@)(@@) % ذو حجر نسبة وغيظا % أنا وقومي نخاف ناره % % 7(@)(@@) % فيا لها في الصفات نارا % وقودها الناس والحجارة % % PageV01P899 البحر : - 1(@)(@@) % عود ببيت على الأفلاك معمور % % ملوك بيت بنصر الله مغمور % % 2(@)(@@) % ما بين منصور ملك ثم ناصره % % وبين ناصر ملك ثم منصور % % 3(@)(@@) % يسري من السعد حتى حل أشرفه % % وزال ما كان لا حل ولا سير % % 4(@)(@@) % تغنى عساكر مصر الشام طالعة % % طلابها بوجوه كالدنانير % % 5(@)(@@) % في ظل ملك تسر السيف نضرته % % فهو الرشيد لديه سيف مسرور % % 6(@)(@@) % بالرعب ينصر قبل السيف مطلعا % فاعجب 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms185# لذلك أيضا سيف مقدور % % 7(@)(@@) % لا زال ملك صلاح الدين مصر على % % ارث من العمر ماشي العدل بالنور % % PageV01P900 البحر : - 1(@)(@@) % خلفت بالقلب بيتا منك معمورا % % لقد هجرت وقلبي ليس مهجورا % % 2(@)(@@) % لا تجعلن بيت قلب المستهام ولا % % بيت التغزل باللمياء مكسورا % % 3(@)(@@) % ليجبر الحسن لي قلبا مضى عمر % له بحسن ابن فضل الله معمورا % % 4(@)(@@) % يا سيد البلغاء الأقدمين بلا % % خلف وأبدع تحبيرا وتحريرا % % 5(@)(@@) % دستور كتاب مولانا بمصر طوى % % عني وأعمده بالشام منشورا % % 6(@)(@@) % فإن رسمت بمصر أو دمشق حمى % % فأعط عبدك في الحالين دستورا % % 7(@)(@@) % سترت بالشام تقصيري وتستره % % بمصر لا زلت تولي الجود مستورا % % PageV01P901 البحر : - 1(@)(@@) % ذكرتك والاسماء تذكر بالكنى % % فلله يا أسما الكنافة والذكر % % 2(@)(@@) % يذكر صحن الوجه صحن كنافة % % هما الحلو مما تشهد العين والفكر % % 3(@)(@@) % ليالي فطر الصوم إذ كل ليلة % % بإحسان نور الدين عيد هو الفطر % % 4(@)(@@) % وانعامه عندي وشكري عنده % % ولكن متى يوفي بإنعامه الشكر % % 5(@)(@@) % اذا كان ذا جود وشعر مجيبني % % وأحسن من شعري له ذلك الشعر % % 6(@)(@@) % ولم أنس ليلات الكنافة قطرها % % هو الحلو الا أنه السحب الغزر % % 7(@)(@@) % يجود على ضعفي فأهتز فرحة % كما انتفض العصفور بلله القطر % % PageV01P902 البحر : - 1(@)(@@) % لآل في سلوك قد جلاها % % بنانك أم معان في سطور % % 2(@)(@@) % وألفاظ بأفضال توالت % % علينا أم قلائد في نحور % % 3(@)(@@) % رعاك الله من بحر أجادت % % بديهة فكره نظم البحور % % 4(@)(@@) % وصدر تقبل الكلمات منه % % فتجلسها المسامع في الصدور % % 5(@)(@@) % لقدج رقت وقد راقت لسمعي % % نظائر منه كالروض النضير % % 6(@)(@@) % وشيد لي بيوتا من جمان % اذا شيدت بيوت من صخور % % 7(@)(@@) % مشى الأدباء في طرق المعاني % % به وبلفظه فمشوا بنور % % PageV01P903 البحر : - 1(@)(@@) % اسم حبي فيه قد أمسى سمر % % للحسن شمس وهو للعقل قمر % % 2(@)(@@) % قامرت بالعقل في لعب به % % وصار أمري فيه جدا واستمر % % 3(@)(@@) % نعم وأعطيت مليحا مثل ما % % أعطيت ممدوحا هو الغيث همر % % 4(@)(@@) % ومر شخصي قائلا في مثل % ماض من الأمثال مجني الثمر % % 5(@)(@@) % لو كان أعطى الله أعطى عمرا % قلت نعم أعطى وأعطى ابن عمر % % 6(@)(@@) % ذو الفضل وابن الفضل ما أحلى اللقا % % وان يكن بعض الجفا فما أمر % % 7(@)(@@) % دم يا علاء الدين وضاح 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms186# السنا % % في أفق العليا وهل يخفى القمر % % PageV01P904 البحر : - 1(@)(@@) % إلى مقرك تسري همة الساري % % معززا بين أوطان وأوطار % % 2(@)(@@) % نادت سعود الحمى العذري تنشده % % عز يدوم لقصادي وزواري % % 3(@)(@@) % يا صاحب السيف والاقلام قد جمعت % % لطاعة الملك جمعاطاعة الباري % % 4(@)(@@) % يا معمل الرأي مخدوما بأربعة % % يمن ونصر واقبال ومختار % % 5(@)(@@) % ليهنك الفضل في دنيا وآخرة % % و الذكر والاجر من جاريهما جاري % % 6(@)(@@) % فقل لمن دار أقطار البلاد على % % دوائه من ضنى ذل واقتار % % 7(@)(@@) % سر للامير فما خابت خطى رجل % % على الدوادار في باب الدواداري % % PageV01P905 البحر : - 1(@)(@@) % و مهابة ذابت لها الفرسان ذو % % ب مدامع فلأجل ذا تتفطر % % 2(@)(@@) % و خلائق كالراح الا أنها % % أصفى من الماء القراح وأطهر % % 3(@)(@@) % و حباء ميمون النقية ماهر % % بشرا يكاد من النضارة يقطر % % 4(@)(@@) % وأنامل قد سخرت نفحاتها % % لذوي الرجا ان السحاب مسخر % % 5(@)(@@) % وفضائل مثل العرائس تجتلى % % فلذاك في أفكاره تتخطر % % 6(@)(@@) % ويراعة حسد السلاح مضاءها % % في كل ما تنهى به أو تأمر % % 7(@)(@@) % فلذاك من حنق يعبس أبيض % في غمده الملقى ويرعد أسمر % % 8(@)(@@) % غاص البحار بها وطار إلى السما % % فالدر ينظم والكواكب تنثر % % 9(@)(@@) % يا ابن الكرام هدوا وحاموا واعتلوا % % وتكرموا فهمو نجوم تزهر % % 10(@)(@@) % ومضوا كما يمضي الغمام وخلفوا % % عبقا كما ينشي الربيع وينشر % % PageV01P906 11(@)(@@) % يا من اذا الأيام أذنب خطبها % % جاءت ببسط يمينه تستغفر % % 12(@)(@@) % حاشاك تغفل عن ولي وده % % صاف ولكن عيشه متكدر % % 13(@)(@@) % يستعبد النعمى لمجدك رقه % % ومديحه المشهور فيك محرر % % 14(@)(@@) % مدح يجر على جرير ذيله % % متكبرا ويقل عنه كثير % % 15(@)(@@) % حظ توعرت المسالك نحوه % % فإذا جريت وراءه أتعثر % % 16(@)(@@) % حتى اذا وجهت نحوك رغبة % % سهل الطريق وأمكن المتعذر % % 17(@)(@@) % لا زلت مقصود الهبات ممتعا % بالعمر تبني المكرمات وتعمر % % 18(@)(@@) % ذكر الغمام بجود كفك ذاكر % % والشيء بالشيء المناسب يذكر % % PageV01P907 البحر : - 1(@)(@@) % سقاك وحياك الحيا أيها القبر % % وفاضت على مغناك أدمعه الغزر % % 2(@)(@@) % وزارت ثراك الطهر سحب وفية % % لدى المحل حتى يجمع الطهر والطهر % % 3(@)(@@) % تجود بسقياها على جدث العلى % % وان كان في أرجائه البحر والبر % % 4(@)(@@) % امام تقى للملك في رأيه هدى % % وصدر علي لله في أمره سر % % 5(@)(@@) % فقدناه مشكور المساعي منزها % عن الوزر 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms187# ان أودى بذي تربة وزر % % 6(@)(@@) % فلهفي على آرائه البيض أحوجت % % اليها الرماح السمر والعذب الصفر % % 7(@)(@@) % ولهفي على أقلامه السود اوحشت % % اليها السيوف الحمر والنعم الخضر % % 8(@)(@@) % سلام على الانشاء بعد فراقه % % سلام امرىء أمسى لأدمعه نثر % % 9(@)(@@) % عليك ابن فضل الله شقت جيوبها % % فضائل في طي البلاد لها نشر % % 10(@)(@@) % رحلت فألقى رحله كل قاصد % % وقطع من أسبابه بعدك الشعر % % PageV01P908 11(@)(@@) % وكانت بك الأوقات فجرا ولا دجى % % فأمست دجى لما انقضيت ولا فجر % % 12(@)(@@) % وليس بقفر ما سكنت وانما % % أرى كل مغنى لست فيه هو القفر % % 13(@)(@@) % مضيت غنيا عن سواك موقرا % وللدين والدنيا اليك إذا فقر % % 14(@)(@@) % كأنك لم تنفع وليا ولم تضر % % عدوا ولم تحمدك في أزمة سفر % 15(@)(@@) % ولم بغز ذو الأملاك مغمدة الظبا % % بجيش من الآراء يقدمه النصر % % 16(@)(@@) % ولم تنض في الأعداء كتبا جلية % سواء بها صف الكتيبة والسطر % % 17(@)(@@) % ولم تخف أسرار الملوك اذا ارتمت % % اليك ولم يفسح لمقدمك الصدر % % 18(@)(@@) % ولم تلق أعباء الأمور ولم يجل % % يراعا ولم يذعن لك النهي والأمر % % 19(@)(@@) % بلى كنت تحمي الناس من كيد دهرهم % % فكادك موتور وقد يدرك الوتر % % 20(@)(@@) % جزيت عن الاسلام خيرا فطالما % % خبا شرر عنه بعزمك أو شر % % PageV01P909 21(@)(@@) % أفاض الدجى حزنا لباس حداده % % عليك وحارت في مطالعها الزهر % % 22(@)(@@) % ولم لا وقد أحييت ذاك تهجدا % وكم كثرت هاتيك أوصافك الغر % 23(@)(@@) % وكم قاصد يبكي عليك وقاصد % فهذا له بشر وهذا له أجر % % 24(@)(@@) % فلا يبعدنك الله من مترحل % له العزة القعساء والسؤدد الدثر % % 25(@)(@@) % يود العدى لو بلغوا ما بلغته % % وكان لهم من عمرك العشر لا الشطر % % 26(@)(@@) % عزاء عليه اليوم يحيى ببيته % % وصبرا صلاح الدين قد صلح الصبر % % 27(@)(@@) % ألا إنها الأيام من شأنها الرضا % % اذا احتكمت يوما ومن شأنها الغدر % % 28(@)(@@) % وما الناس إلا راحل إثر راحل % إذا ما انقضى عصر بدا بعده عصر % % 29(@)(@@) % تبدت لدى البيدا مطايا قبورهم % % ليعلم أهل العقل أنهم سفر % 30(@)(@@) % عجائب تعيي الناظرين وحكمة % ممنعة قد زل من دونها الفكر % % PageV01P910 31(@)(@@) % وغاية أهل البحث والفحص قولهم % % هو الرزق يمضي وقته وهو العمر % % 32(@)(@@) % بحقك قل لي أين من طار ذكره 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms188# % % فأصبح في كل البقاع له وكر % 33(@)(@@) % وأين ابن فضل الله ذو الرتب التي % % عنت لسناها الشمس أو قصر البدر % % 34(@)(@@) % مضى وبحق أن يقال له مضى % % فقد كان عضبا في الأمور له إثر % % 35(@)(@@) % سقى عهده المشكور عنا ولا غدا % % معانيه عفو لابكي ولا نزر % % 36(@)(@@) % وأكرم به من صائم متخشع % تولى فأمسى في الجنان له فطر % % PageV01P911 البحر : - 1(@)(@@) % أما والله قد شرفت شعري % % فأصبح كل بيت مثل قصر % % 2(@)(@@) % وقد لاقيت من علياك بحرا % يلذ مديحه في كل بحر % % 3(@)(@@) % وصدرا فيه للرحمن سر % كذاك الصدر موطن كل سر % % 4(@)(@@) % ولم أر فيك عيبا غير نعمى % % بها استعبدت منا كل حر % 5(@)(@@) % وبرا إن تقاصر عنه شكري % % فأقسم ما تقاصر عنه أجري % % 6(@)(@@) % أقول لساكني حلب جميعا % مقالة مجتلي خبر وخبر % % 7(@)(@@) % دعوا صيد المحامد والمعالي % % فقد صادتهما همم ابن صقر % % PageV01P912 البحر : - 1(@)(@@) % حجبت بالدمع أجفاني عن النظر % % إلى سواك وقلبي الصب بالفكر % % 2(@)(@@) % وزاد دمعي عما كنت أطلبه % % فلا تسل ما جرى منه على بصري % % 3(@)(@@) % يا باسما قلت للاحي أمبسمه % % أبهى أم العقد قال الكل من درر % 4(@)(@@) % سهرت في الوصل غنما والجفا أسفا % سبحان فاطر أجفاني على السهر % % PageV01P913 البحر : - 1(@)(@@) % يا قلب أنت ومقلتي % % متحاربان كما أرى % % 2(@)(@@) % هاتيك تمنعك الهدو % وأنت تمنعها الكرى % % 3(@)(@@) % وأنا الذي قاسيت بي % % نكما العذاب الاكبرا % % 4(@)(@@) % كفا المدامع والاسى % % فلقد كفى ما قد جرى % % 5(@)(@@) % لا آخذ الرحمن من % % ملك الحشا فتجبرا % % 6(@)(@@) % قابلت رونق خده % % فصبغت دمعي أحمرا % % 7(@)(@@) % يا ناعس الاجفان قد % % حكم الهوى أن أسهرا % % 8(@)(@@) % ما كان أريح عاشقا % لو أن وصلك يشترى % % PageV01P914 البحر : - 1(@)(@@) % ألا ليتني حملت ما بك من ضنا % % على أن لي منه الأذى ولك الأجر % % 2(@)(@@) % فأقسم لولا أنت ما أعتب الرجا % % لمستعتب منا ولا سكت الدهر % % 3(@)(@@) % أحاشيك من ضر ألم وانما % % بطلعتك الغراء يستدفع الضر % 4(@)(@@) % ومازدت بالأدواء الا محاسنا % كما اعتل فازدادت محاسنه النشر % % 5(@)(@@) % فلا تخش مما يوجب الصبر مرة % كأنك بالنعمى وقد وجب الشكر % % 6(@)(@@) % وحقك لا خاب الدعاء ولا دجى % % سنا النصف الازنت ما يشرق البدر % % PageV01P915 البحر : - 1(@)(@@) % أيها البحر نائلا وعلوما % وبأهل الرجاء 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms189# يا أيها البر % % 2(@)(@@) % والذي كفه من الغيث أندى % % والذي لفظه من الروض أنضر % % 3(@)(@@) % ما ترى العبد كيف أصبح ما أس % % وأ حالا وما أذل وأحقر % % 4(@)(@@) % كل صبح يروم بالبرد ذبحي % % فلهذا يقول الله أكبر % % 5(@)(@@) % واذا ما اشتكيت بردا كساني % % كسوة منه ما أشد وأنكر % % 6(@)(@@) % زرقة الجسم وابيضاض ثلوج % % ألبساني ثوب العذاب مشهر % % 7(@)(@@) % أي ثلج شابت به الأرض مرأى % % حين شابت به المفاصل مخبر % % 8(@)(@@) % تندف القطن عبرة وهو قطن % هكذا يندف الغريب المقتر % % 9(@)(@@) % عجبا منه يشتكي جسدي البر % % د لديه ومهجتي تشتكي الحر % 10(@)(@@) % زاد بردا فلو تولع بالشع % % ر لقلنا الصلاح أو هو أشعر % % PageV01P916 11(@)(@@) % لا تقل لي أكثرت في الحال وصفا % فالذي بي من شدة الحال أكثر % % 12(@)(@@) % فتصدق وابعث بقفة فحم % إن فحمي مضى وكيري تغير % % 13(@)(@@) % هاتها كالشباب في العين تثني % % كلب البرد حرها أن تسعر % % 14(@)(@@) % واذا ما الشتا تجمر في القو % % ل أتاه منها أشد وأجمر % % 15(@)(@@) % وتعجل هذا المراد فما يح % % مل حالي الضعيف أن يتأخر % % 16(@)(@@) % كتب العبد خطه وهو في الفر % % ش وما كل ما جرى منه يذكر % % PageV01P917 البحر : - 1(@)(@@) % سلام كنشر الروض لف بمدرج % % يريك بديع الحب في اللف والنشر % % 2(@)(@@) % عليك أخا العلياء والعلم والحجى % % وفضل الندى واليأس والنظم والنثر % % 3(@)(@@) % لعمري لقد حملت بينك في الورى % % من الشهب العالي السنا ومن الشعر % % 4(@)(@@) % ولو شفعتك المكرمات بآخر % % لما بات شاكي الدهر منه على وتر % % PageV01P918 البحر : - 1(@)(@@) % يا خير من تبسط المساعي % % له ومن تعقد الخناصر % % 2(@)(@@) % ويا أميرا على قديم % % سما وأربى على المعاصر % % 3(@)(@@) % أوصل بخير البدور مدحا % يبقى اذا بادت العناصر % % 4(@)(@@) % وحسبه أنه قريض % أنت له قوة وناصر % % PageV01P919 البحر : - 1(@)(@@) % يا أقرب الناس من مدح ومن كرم % وأبعد الناس من عاب ومن عار % % 2(@)(@@) % أقسمت لولا أياديك التي اشتهرت % % ناداني الزمن المودي بأشعاري % % 3(@)(@@) % دع المكارم لا ترحل لبغيتها % % واقعد فانك أنت الجامع العاري % % PageV01P920 البحر : - 1(@)(@@) % عدمت محمدا أيام أرجو % % نداه على الزمان وأستجير % % 2(@)(@@) % فان تحجب محاسنه بلحد % ففي أفق السماء لها مسير % % 3(@)(@@) % تقول لروحه الأفلاك أهلا % لنا زمن على هذا ندور % % PageV01P921 البحر : - 1(@)(@@) % لي صاحب 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms190# ترك المليح وعاد في % % حب المليحة من ذوي الاقدار % % 2(@)(@@) % قد كان عبد الاشهب المنسوب في % % حسن فأضحى وهو عبد الدار % % PageV01P922 البحر : - 1(@)(@@) % يا صاحب الأقلام والسيف قد % % أتقن في التدبيرما قرره % % 2(@)(@@) % نحن المساكين لأرزاقنا % % باب طواه الدهر أو عسره % % 3(@)(@@) % فاجعل باحسانك مفتاحه % % وإن تعاصي فاقلع السكرة % % PageV01P923 البحر : - 1(@)(@@) % يفديك يا قاضي القضاة عليهم % % من كل شيء تشتكي كل الورى % % 2(@)(@@) % شهد الشرى لك حين زارك بالتقى % % والبر مختبر العلى ومخبرا % % 3(@)(@@) % لا تعدم المدح السوائر سيدا % هذي خلائقه بتخبير الشرى % % PageV01P924 البحر : - 1(@)(@@) % وأغيد كلما تجنى % % ورث بين القلوب جمرا % % 2(@)(@@) % يميل تيها كأنما قد % % سقته تلك العيون خمرا % % 3(@)(@@) % تالله لا فاتني لقاه % % وعين كيسي عليه حمرا % % PageV01P925 البحر : - 1(@)(@@) % قالوا سررت زائرا بقادم % % حج شهابا ثم عاد بدرا % % 2(@)(@@) % تطلب منه وده ورفده % % قلت نعم كلاهما وتمرا % % PageV01P926 البحر : - 1(@)(@@) % قل للصديق جمال الدين لا برحت % % نعماه حلية إنشاء وأشعار % % 2(@)(@@) % لئن تخيرت في السادات مثلك لي % % لقد تخيرت مختار بن مختار % % PageV01P927 البحر : - 1(@)(@@) % هنئتها إمرة مجددة % % يا ابن السراة الاكابر البرره % % 2(@)(@@) % أقسم من ذا وذا بأنكم % % وجدتم من اكابر العشرة % % PageV01P928 البحر : - 1(@)(@@) % أخا العلم ان الشمس باد ضياؤها % % فسر بسناء حيثما أنت سائر % % 2(@)(@@) % وخل فتى شيراز عنك فانما % % هو القطب قد دارت عليه الدوائر % % PageV01P929 البحر : - 1(@)(@@) % وبديع الجمال لم ير طرفي % % مثل أعطافه ولا طرف غيري % % 2(@)(@@) % كلما حدت عن هواه أتاني % % سهم ألحاظه كسهم النميري % % PageV01P930 البحر : - 1(@)(@@) % بروحي غزيل أنس رمى % % حشاي بلحظ وأحشاء غيري % % 2(@)(@@) % أحيد عن السهم من لحظه % % وسهم الغزال كسهم النميري % % PageV01P931 البحر : - 1(@)(@@) % لقد خفقت منا القلوب تشوقا % وعدت فكادت أن تطير سرورا % % 2(@)(@@) % يمينك تصطاد الوحوش مطيعة % % وحبك يصطاد القلوب طيورا % % PageV01P932 البحر : - 1(@)(@@) % دواة لها جنس الحديد وبأسه % % وزادت عليه في الندى فهي أبهر % % 2(@)(@@) % وكمل معناها يراعك منشئا % ففولاذها في الحالتين مجوهر % % PageV01P933 البحر : - 1(@)(@@) % مليح جلا من خطه لي رقعة % % تدل على تحريره واعتباره % % 2(@)(@@) % فلم أر في خط وشكل كحسنها % % سوى شكل خديه وخط عذاره % % PageV01P934 البحر : - 1(@)(@@) % أقبل عند القوم يسألني % % من أي أرضيك نلت إيثارا % % 2(@)(@@) % قلت من النيك ما رأى بصري % % خيرا ولكن رأيت منقارا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms191# % % PageV01P935 البحر : - 1(@)(@@) % آنستنا يا أخانا % % في ديننا المبرور % % 2(@)(@@) % قد كنت شمعة نار % % فصرت شمعة نور % % PageV01P936 البحر : - 1(@)(@@) % قل لابن نعلان الذي أصبحت % % كرته بين الورى خاسره % % 2(@)(@@) % ظلمت دنياك وطلقتها % % فرحت لا دنيا ولا آخره % % PageV01P937 البحر : - 1(@)(@@) % يا سيدي شكرا لها % % من أنعم ذات غرر % % 2(@)(@@) % بشرك فيها بارق % يضيء والبر المطر % % 3(@)(@@) % ولفظك الحائز والا % % حسان لي بحر وبر % 4(@)(@@) % يا ابن الأولى آثارهم % % نجوم آفاق السير % % 5(@)(@@) % أذكرتني بالقوم يا % % علي بيت قد بهر % % 6(@)(@@) % بمنزل عالي السنا % % له على الشهب مقر % 7(@)(@@) % جنة عيش أكلها % % دائم ظل وبكر % % 8(@)(@@) % نعم ونظم قد حلا % % مكررا يلهي الفكر % % 9(@)(@@) % فيا لها ثلاثة % % بمثلها فليفتخر % % 10(@)(@@) % نظم وقوم وحمى % لكل بيت معتبر % % PageV01P938 البحر : - 1(@)(@@) % وحقكم لا مر بي الصبر عنكم % ولو ذقت هجرانا أمر من الصبر % % 2(@)(@@) % ولا أشتكيكم ما حييت وانما % % إلى فضلكم أشكو اذا مسني ضري % % 3(@)(@@) % على حبكم أنفقت عمري جاهدا % فان رمت سلوانا فيا ضيعة العمر % % 4(@)(@@) % أمين التقى يكفي من الشكر أنه % % يقصر عما أنت مانحه شكري % % 5(@)(@@) % أمين التقى قلبي أمين على الولا % % ان ارتبتمونا فاستشهدوه على أمري % % 6(@)(@@) % فلولاك بادت عند بيروت حالتي % % وسوفت في أمر الموارث والحشر % % 7(@)(@@) % فيا من له في السر والعلم رتبة % يجازيك عني عالم السر والجهر % % PageV01P939 البحر : - 1(@)(@@) % غازلتني سمراء في حلية المر % % د بدبوقة غزت بمظفر % % 2(@)(@@) % ثم قالت تحبني قلت في حل % % ية سهرا واليوم حلية أسمر % % 3(@)(@@) % إن كلي يحب كلك إلا % % ان قلبي يحب من فيك أكثر % % 4(@)(@@) % آه يا دهر صبوة وصبا قد % % كان أزهى من النجوم وأزهر % % 5(@)(@@) % ليت ذهني يخلو فيخدم شعري % % كل جد وكل هزل بجوهر % % 6(@)(@@) % ليت شعري يصفو كما كان قدما % فعسى العمر ماحيا ماتكدر % % 7(@)(@@) % إن اكن صرت بالبلادة فزعا % إن لفظي كما يقال مسير % % PageV01P940 البحر : - 1(@)(@@) % يا سعد دين الله أين الذي % % عودت من بر وتيسير % % 2(@)(@@) % العبد ما حلي في عهدة % % والأهل لا حلي ولا سيري % % 3(@)(@@) % و اللحم كالخبز ولم أدر من % % قالت به حداتها طيري % % 4(@)(@@) % سيان في أول ضري وفي الآ % % خر تفطيري وتفطيري % % 5(@)(@@) % و بعد ذا والله لا أنسيت % % محامدي الحلوة تكديري 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms192# % % 6(@)(@@) % و حق إحسانك لاحلت عن % % ظني بك الحسنى وتقديري % % PageV01P941 البحر : - 1(@)(@@) % جل الإمام عن الأشعار يعرضها % % فكلنا بالدعا مشغول أفكار % % 2(@)(@@) % و فضله يقتضينا أن نقول فما % % نعني سواه إذا فهنا بأشعار % % 3(@)(@@) % ذو النفس تاقت لعليا دارها فجرت % % ومن جنان غد تاقت إلى دار % % 4(@)(@@) % و اهنأ بعيدك في نعماء معرفة % % عن حزم أمر يليه رفع مقدار % % 5(@)(@@) % و دم غياث الورى يا غيث رائدهم % % ونصر محوجهم يا نجل أنصار % % 6(@)(@@) % ان ينج من نار بؤس من لحظت ففي % % ولاء مثلك ما ينجي من النار % % PageV01P942 البحر : - 1(@)(@@) % ثوب من الحب أودى بي مشهره % % فالجسم أصفره والدمع أحمره % % 2(@)(@@) % يا من يغير جسم الصب من سقم % % كن كيف شئت فهذا لا يغيره % % 3(@)(@@) % طوى هواك بقلب تلك عادته % % وإنما علمي المدح ينشره % % 4(@)(@@) % من لا خلا من نداه البيت نسكنه % % ولاخلا من ثناه البيت نشعره % % 5(@)(@@) % يا صاحبا لم يضع قصد الوفود له % % وضاع نشر الغولي حين نذكره % % 6(@)(@@) % تهن بالعيد إما المرتجى نبدي % % أو ألحسود بأنكاد تفطره % % 7(@)(@@) % و أمر بنشر سماط منك يجبرنا % % ونحن في رسمنا بالأكل نجبره % % PageV01P943 البحر : - 1(@)(@@) % قل للفهيم الناصري % % صائحا مستنصرا % % 2(@)(@@) % يا صاحبي أصبحت ح % % تى في الخطآء معثرا % % 3(@)(@@) % من أجرة المسكن في % % إعراب هم أشهرا % % 4(@)(@@) % بالنصف والكسر معا % فلا كرى ولا كرا % % 5(@)(@@) % نعم وهمي أمم % وحالتي إلى ورا % % 6(@)(@@) % ناظر بيروت أتى % % عساك لي أن تنظرا % % 7(@)(@@) % مهما ترى مهما ترى % % مهما ترى مهما ترى % % PageV01P944 البحر : - 1(@)(@@) % تعشقتها في الحلي غصناء منثورا % % وفي البرد بدرا في السماء منيرا % % 2(@)(@@) % أشاهد من وجه التأمل جنة % % وألبس من جنس العناق حريرا % % 3(@)(@@) % و ألثم معسولا نظيما كأنما % % تنظم من لفظ العلآء نثيرا % % 4(@)(@@) % سري تعجلنا بيوم قدومه % % على الصوم أعيادا لنا وسرورا % % 5(@)(@@) % بعشر نهنيه ويمناه في الندى % % بخمس يهنينا الغمام مطيرا % % 6(@)(@@) % أفاد فما نشكو فتور قريحة % ترى فضل هاتيك الصفات فتورا % % 7(@)(@@) % و فطر أفواها ولولاه لم نجد % % سوى في سماوات القلوب فتورا % % PageV01P945 البحر : - 1(@)(@@) % ثغر عليه من الملاحة سكر % % يحلو الحديث عليه وهو مكرر % % 2(@)(@@) % عرف الذي قد رام عنه تصبري % % أني قتيل في هواه مصبر % % 3(@)(@@) % و 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms193# يحق لي فيه التغزل باهرا % وثنا تقي الدين عندي أبهر % % 4(@)(@@) % ذو العلم والفضل الذين هما هما % % شهب بأفاق السيادة تزهر % % 5(@)(@@) % نظروا فكان أحق بالنظر الذي % % كتقية وأمينه لم ينظروا % % 6(@)(@@) % و لئن شكوت لماله ولجاهه % % حصري فإن ثناهما لا يحصر % % 7(@)(@@) % طير الثناء محلق في أفقه % % أبد الزمان وانني لمقصر % % PageV01P946 البحر : - 1(@)(@@) % غصن بأرواق الغلائل يخطر % % وسوى هواه بمهجتي لا يخطر % % 2(@)(@@) % يسقى بماء شبابه ومدامعي % % فبحسنه وبحزن قلبي يثمر % % 3(@)(@@) % في حسن يوسف في شمائله وفي % % مدح ابن يعقوب القرائح تشعر % % 4(@)(@@) % علامة الدنيا وكافي ملكها % % فالسر يحفظ والفضائل تشهر % % 5(@)(@@) % لا عيب فيه سوى ندى مستعبد % % رق المديح وأنه لمحرر % % 6(@)(@@) % لي من نداه عادة قد أخرت % % عني وتأخير الندى لا يؤثر % % 7(@)(@@) % فترادفت عندي الهموم وربما % % يرجى لها فرج لديه وأكثر % % PageV01P947 البحر : - 1(@)(@@) % غصون الحمى ان الفؤاد لطائر % % اليكم واني كامل الحب وافر % % 2(@)(@@) % و صفت بأوصاف القريض لشقوتي % % فلا غرو ان دارت علي الدوائر % % 3(@)(@@) % أهيم بكم في كل واد من الأسى % % على أنني لابن الخليفة شاعر % % 4(@)(@@) % أمير بني فضل الإله وكلهم % % بأقلامه والسيف ناه وآمر % % 5(@)(@@) % مقيم على مغنى دمشق وظله % % لآمالنا في الشرق والغرب ساتر % % 6(@)(@@) % كذا ابدا يا ابن السيادة والتقى % % لنا قوة مهما نراك وناصر % % 7(@)(@@) % و يروي أحاديث الثناء صحيحة % عطاء لنا من راحتيك وجابر % % PageV01P948 البحر : - 1(@)(@@) % قل للأمير الذي في % % ذكراه حمد وشكر % % 2(@)(@@) % يا غيث جود نداه % % والبر بر وبحر % % 3(@)(@@) % مولاي هنئت صوما % عقباه مدح وأجر % % 4(@)(@@) % فيه لقوم وقوم % % تفطير قلب وفطر % % 5(@)(@@) % فللموالين نفع % وللمعادين ضر % % 6(@)(@@) % و لي من الحلو حالا % قصد فقل وكثر % % 7(@)(@@) % و غيب القطر فهمي % % وأول الغيث قطر % % PageV01P949 البحر : - 1(@)(@@) % صب تغنى وجنح الليل معتكر % % فضاء قبل ضياء الصبح ينتشر % % 2(@)(@@) % يا ساكن البيت من شعري وقلبي اذ % % هذا صحيح وهذا منه منكسر % % 3(@)(@@) % ان كان افراط حبي فيك أصبح لي % % ذنبا فأهلا بذنب ليس يغتفر % % 4(@)(@@) % يا من أهنيه بالأعياد مقبلة % % فطرا ونحرا وقلبي فيه منفطر % % 5(@)(@@) % و غاب ذهني في الأضحى فها أنا ذا % % كانني التيس من شكواه منتحر % % 6(@)(@@) % هذا وقلبي كشعري أنت ساكنه % % والبيت بيتك 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms194# والمعروف ينتظر % % 7(@)(@@) % يبكي اشتياقا اليكم صائغ مدحا % فالدر منتظم منه ومنتثر % % PageV01P950 البحر : - 1(@)(@@) % لك عارض لدموع عيني ممطر % % فدع الجفاء فلست ممن يصبر % % 2(@)(@@) % هيهات ما القلب الذي أحرقته % % يا فاتر الأجفان ممن يفتر % % 3(@)(@@) % حسبي وحسبك ان جفنك ناعس % % أبد الزمان وأن جفني يسهر % % 4(@)(@@) % ألبستني ثوب الغرام مشهرا % فمدامعي حمر ولوني أصفر % % 5(@)(@@) % و نصبت للتبريج أحشائي التي % % فيها من الأشواق فعل مضمر % % 6(@)(@@) % يا صاحب العطف الموشج شعره % % قول العواذل في هواك يكفر % % 7(@)(@@) % إن كنت لم أسمع مقال عواذلي % % فوحق حسنك أنهم لم يبصروا % % PageV01P951 البحر : - 1(@)(@@) % يارب طرف يفوق الطرف من سبق % % فغاية العين نوما أن ترى أثره % % 2(@)(@@) % ورد مع العرب منسوب فلا قطعت % % أيدي الحوادث من أعراقه أثره % % 3(@)(@@) % اذا رأيت دخان النقع مرتفعا % لمحت للسبق من أعطافه شرره % % 4(@)(@@) % ان امطرت ظهره رامي السهام مضى % % والسبق حذوا فلولا سبقه عقره % % 5(@)(@@) % عجبت حين يسمى سابحا وله % % وثب لو البحر أرسى دونه ظفره % % 6(@)(@@) % لما ترفع عن ند يسابقه % % أضحى يسابق في ميدانه نظره % % 7(@)(@@) % فتحاء في هفيات الحزن صاعدة % % أولا فصاعقة في السهل منحدره % % 8(@)(@@) % أهز في البيد مثل الغصن هادية % % فألقط الوحش عن وجه الثرى أثره % % PageV01P952 البحر : - 1(@)(@@) % سيدي والذي له صدقات % % سابقات لسبق قلبي الكسير % % 2(@)(@@) % أعف بالله عن تواقيع قوم % % أجحفوا عندها بحالي السعير % % 3(@)(@@) % يطلبون الثنا طويلا وأخشى % % من معاداتهم على التقصير % % 4(@)(@@) % و أقضي الدجى سهادا ويمضي % % في حديث الغنى حديث الفقير % % PageV01P953 البحر : - 1(@)(@@) % مضت أحبة قلبي حيث لا سكن % % يسلي المحب ولا أهل ولا دار % % 2(@)(@@) % وخفف الحزن أني لاحق بهم % % وان صرف الردى بالخلق كرار % % 3(@)(@@) % ترمي الأهلة أعمار الأنام فلا % % يفوتها حذر الأحشاء فرار % % 4(@)(@@) % كأن كل هلال في مطالعه % % قوس له عند أهل الأرض أوتار % % PageV01P954 البحر : - 1(@)(@@) % أنح جناب الوزير منتصرا % فإنه جابر لما كسرا % % 2(@)(@@) % ناديه بالأغنياء محتفل % % وسره حائم على الفقرا % % 3(@)(@@) % سوف يرى رأيه الجميل اذا % % أتا حماه الرحيب سوف يرى % % 4(@)(@@) % نعم وزير لا وزر يتبعه % % فينا وأما سواه لا وزرا % % 5(@)(@@) % حلى ثناه لأحرفي قعدت % % كالنمل تسعى له مع الشعرا % % PageV01P955 البحر : - 1(@)(@@) % أيا ملكا أيامه الغر كلها % % مواسم 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms195# تلقى الناس بالمنن الغر % % 2(@)(@@) % تهن بعيد النحر وابق ممتعا % بأمثاله سامي العلى نافذ الأمر % % 3(@)(@@) % تقلدنا فيه قلائد أنعم % وأحسن ما تبدو القلائد في النحر % % PageV01P956 البحر : - 1(@)(@@) % يا مليكا تنظر الشهب له % % مثلما تنظر للشهب الورى % % 2(@)(@@) % دم كذا في كل وقت سامعا % مدحا يعيي مداها الفكرا % % 3(@)(@@) % كلما أوردت منها قصصا % حرجت منها صدور الشعرا % % PageV01P957 البحر : - 1(@)(@@) % بموسى أستجر وسليمان عذ % % فنعم الوزير ونعم الأمير % % 2(@)(@@) % ولا تخش بينهما عسرة % بديوان حشر دمشق العسير % % 3(@)(@@) % فلله لطف لديهم يقو % % ل ذلك حشر لدينا يسير % % PageV01P958 البحر : - 1(@)(@@) % يا سيد الوزراء الأكرمين ومن % % قد وافق الخبر في عليائه الخبر % 2(@)(@@) % الغيث والوحل عذري ان قعدت فمن % % ذنب السماء وذنب الأرض أعتذر % % 3(@)(@@) % والجبر من خلفك الوضاح أجعله % % لما على ذمتي في القصد ينكسر % % PageV01P959 البحر : - 1(@)(@@) % أحب ديار سادتي ولم لا % % أحب لأل فاطمة الديارا % % 2(@)(@@) % فمن لي أن أطوف عليه بابا % % أقبل ذا الجدار وذا الجدارا % % 3(@)(@@) % وأدخل جنة قد عجلت لي % % لأني بالولاء أمنت نارا % % PageV01P960 البحر : - 1(@)(@@) % تهن تشاريف السعود تواصلت % % وتدبير ملك الشام والنهي والأمر % % 2(@)(@@) % لئن بيضت عين المحبين بالهنا % % لقد بيضت عين المعادين بالقهر % % 3(@)(@@) % ودم وابق للسر الشريف أمينه % على السر في كل المقادير والجهر % % PageV01P961 البحر : - 1(@)(@@) % قلت إذ جاءني ندى ناظر الثغر % % ر على البعد حبذا الغيث يذكر % % 2(@)(@@) % فخر دين الإله أخبرني عن % % ه صراج به المحامد تزهر % % 3(@)(@@) % رب عمره في رواة المعالي % % فهو فيهم نعم السراج المعمر % % PageV01P962 البحر : - 1(@)(@@) % بأبي غزال كاسر % قلبي باظره الكسير % % 2(@)(@@) % ذو وجنة قد زان شع % % ر الصدغ منظرها النضير % % 3(@)(@@) % خيلانها في جنة % ولباسهم فيها حرير % % PageV01P963 البحر : - 1(@)(@@) % أما ابن يعقوب فأندى الورى % % وأعلم القوم ولا أمتري % % 2(@)(@@) % يجود من مال ومن منطق % بالعرض الأوفى وبالجوهر % % 3(@)(@@) % لا زال كالزهرة من بشره % % وبالندى للحر كالمشتري % % PageV01P964 البحر : - 1(@)(@@) % قدرت على الاحسان سرا وكيف لي % % بنوح نسيم الشكر أصنعه سرا % % 2(@)(@@) % فيا حبذا البر الذي ليس عيبه % % سوى أنني لا أستطيع له شكرا % % 3(@)(@@) % شأجعل شكري مثل ميت كما تشا % % ليعظم رب العالمين لي الأجرا % % PageV01P965 البحر : - 1(@)(@@) % يا صاحبا صحبت معارفه الورى % % هنئتها خلعا مجددة السرى % % 2(@)(@@) % زهراء 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms196# معلمة اذا لاقيتها % % لاقيت منها العيش أبيض أخضرا % % 3(@)(@@) % لا غرو حين نراك لابس خلعة % فالشمس تحت الغيم أمكن ما ترى % % PageV01P966 البحر : - 1(@)(@@) % هنيئا لك الحج الشريف وحبذا % % بك الربع مأهول المنازل والدهر % % 2(@)(@@) % كذا فليعد من عاد مقبول حجة % % له الذكر في كل المنازل والاجر % % 3(@)(@@) % يحن اشتياقا نحو رؤيته الصفا % % ويملأ دمعا بعد فرقته الحجر % % PageV01P967 البحر : - 1(@)(@@) % وكاتبة في خدها بدموعها % % لبعدي من شرح الأسى أسطرا حمرا % % 2(@)(@@) % تقول وظهر العود يخدج للسرى % % متى تشتفي بالعود مقلتي العبرى % % 3(@)(@@) % فقلت املإي خديك تبر مدامع % % إلى أن أرى كفي قد ملآ تبرا % % 4(@)(@@) % فقالت إلى بدر العلى فاركب الدجى % % فقلت نعم فاستيقنت بلج السرى % % 5(@)(@@) % فطاف على يمنى يديه رجاؤنا % % وأقسم أن لا بد يبلغ اليسرى % % PageV01P968 البحر : - 1(@)(@@) % قاضي القضاة أعز الله جانبه % % أولى بقصدي وتأميلي وأشعاري % % 2(@)(@@) % إني وصحبي وشمس الدين أولهم % % إلى الدعاء له سباق مضمار % % 3(@)(@@) % اذا ذكرناه فاح العطر أجمعه % % فكلنا فيه عطار ابن عطار % % PageV01P969 البحر : - 1(@)(@@) % فديتك للندى والعلم بحرا % اذا جارى نداه المزن غرر % % 2(@)(@@) % كسوت العبد بردا من فخار % % حريري على العليا تحرر % % 3(@)(@@) % تحرر نظمه معنى ولفظا % فيا لله من برد محرر % % PageV01P970 البحر : - 1(@)(@@) % تهن بها خلعة قدمت % % بأمثالها موجبات البشارة % % 2(@)(@@) % ومرتبة نبأت بالسعود % % فكانت كما قيل نعم الإمارة % % 3(@)(@@) % سعودك عندي زهر الربيع % % وعند عدوك شق المراره % % PageV01P971 البحر : - 1(@)(@@) % جادت ضريحك يا خطيب غمامة % زكياء يخطب رعدها فيكرر % % 2(@)(@@) % إما ليسعى نحو قبرك دانيا % % شوق يحث ولوعة لا تتعثر % % 3(@)(@@) % ولو أن مشتاقا تكلف فوق ما % % في وسعه لسعى اليك المنبر % % PageV01P972 البحر : - 1(@)(@@) % تهن بشهر الصوم يا خير صاحب % صحبنا به الأيام واجبة الشكر % % 2(@)(@@) % وعش ذا زمان كله من تنسك % % ومن كرم مستقبل الصوم والفطر % % 3(@)(@@) % مناقب شاعت في الورى علوية % % فكلهم فيها يشيع من عذر % % PageV01P973 البحر : - 1(@)(@@) % تشرف يا رسول الله نظمي % % بمدحك واستجاش بكل خير % % 2(@)(@@) % فما أعلى وأبرك منه كعبي % % وما أعلى نباتي عن زهير % % PageV01P974 البحر : - 1(@)(@@) % عش يا وزيرا شمسه قد زهت % % ويا أميرا حسنه قد زهر % % 2(@)(@@) % سبحان من دبر أحوالنا % % وسخر الشمس لنا والقمر % % PageV01P975 البحر : - 1(@)(@@) % وكنت أظن في كبري صلاحا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms197# % يكفر زلة السن الصغير % % 2(@)(@@) % فلما أن كبرت ازددت نحسا % فقل ماشئت في النحس الكبير % % PageV01P976 البحر : - 1(@)(@@) % تقول الورى اذ بيت شعري مخيب % % وفي بيت غيري من نداك يسار % % 2(@)(@@) % ألم تر بيت الفقر يجفى ويجتوى % % وبيت الغنى يهدى له ويزار % % PageV01P977 البحر : - 1(@)(@@) % ألا رب يوم والظبا حول دارها % % تصف على أيدي الكماة وتزهر % % 2(@)(@@) % وقفت كأني من وراء زجاجة % % إلى الدار من فرط الصبابة أنظر % % PageV01P978 البحر : - 1(@)(@@) % أما حماة فعيش ساكنها % % صفو وكل زمانه سحر % 2(@)(@@) % اسكندر الايام مالكها % % بدليل أن زمانه الخضر % % PageV01P979 البحر : - 1(@)(@@) % بروحي نديم تشهد الراح انه % % قضى العمر باللذات وهو خبير % % 2(@)(@@) % تذكر مزج الكأس عند وفاته % % فأوصى لها بالثلث وهو كثير % % PageV01P980 البحر : - 1(@)(@@) % أصبحت يا مالكي بغيض ندى % % ديناره منجح لأوطاري % % 2(@)(@@) % اذا رويت الثناء متصلا % أرويه عن مالك ابن دينار % % PageV01P981 البحر : - 1(@)(@@) % جادت صفات علي في الورى رتبا % تظلمت من سناها الانجم الزهر % % 2(@)(@@) % أما ترى ما تشكي من أنامله % % عطارد وادعى في وجهه القمر % % PageV01P982 البحر : - 1(@)(@@) % أهم بتسطير الذي أنا واجد % % اليك فيمحو دمع عيني أسطاري % % 2(@)(@@) % فيا عجبا للدمع بث سرائرا % % لغيري ودمعي مانعي بث أسراري % % PageV01P983 البحر : - 1(@)(@@) % بروحي مكفوف اللواحظ لم يدع % % سبيلا إلى صبر يفوز بخيره % % 2(@)(@@) % سوالفه تغني الورى ختل طرفه % % ومن لم يمت بالسيف مات بغيره % % PageV01P984 البحر : - 1(@)(@@) % ركبوا وقد ملأوا الفضا في أحمر % % كالشمس تشرق في العجاج الأكدر % % 2(@)(@@) % فزمانهم يقضي بعيش أبيض % % وجيوشهم تسري بموت أحمر % % PageV01P985 البحر : - 1(@)(@@) % أمولاي شمس الدين شكرا لانعم % % هما قطرها حتى استوى ناهضا شكري % % 2(@)(@@) % وكان نباتي قد ذوى عنه معشر % فأحياه محيي النبت بالشمس والقطر % % PageV01P986 البحر : - 1(@)(@@) % نسبي لبيتك زادني شرفا % في البدو مذكور وفي الحضر % % 2(@)(@@) % حسب النبات بكل ناحية % % شرفا اذا وصفوه بالخضر % % PageV01P987 البحر : - 1(@)(@@) % كذا أبدا يا أرفع الناس همة % % غوادي الندى من راحتيك غزار % % 2(@)(@@) % أقدم أطراسا وتمنح أنعما % فمني أوراق ومنك ثمار % % PageV01P988 البحر : - 1(@)(@@) % تكشفت عن نتيف % % فقلت قومي وسيري % % 2(@)(@@) % فما متاعك دنيا % % الا متاع الغرور % % PageV01P989 البحر : - 1(@)(@@) % أفدي مليحا لي إلى % % مرآه طول الدهر فقر % % 2(@)(@@) % من خده وجفونه % % للحسن دينار وكسر % % PageV01P990 البحر : - 1(@)(@@) % صفت المرد لذقني % % بعد نسوان اداري % % 2(@)(@@) % كنت زيرا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms198# لنساء % % صرت كوزا لصغار % % PageV01P991 البحر : - 1(@)(@@) % ونجل من بني الآداب أفدي % % حلاه بالصغير وبالكبير % % 2(@)(@@) % بودي لو نطقت له بوصف % فآتى بالمطرز والحريري % % PageV01P992 البحر : - 1(@)(@@) % قالت لطائف شعري % % شاكل كريما بمصر % % 2(@)(@@) % فعنده بيت بحر % وعندنا بيت شعر % PageV01P993 البحر : - 1(@)(@@) % سكنت وابني بدار قوم % أوقاتنا تارة وتاره % % 2(@)(@@) % فانها الخصام نار % وقودها الناس والحجاره % % PageV01P994 البحر : - 1(@)(@@) % تقلدت من نعماك في حال غربتي % % قلائد شتى من نوال ومن شعر % % 2(@)(@@) % وأسكنتني بيتا على البحر أرتجي % % مكافاته في ألف بيت على بحر % % PageV01P995 البحر : - 1(@)(@@) % يا مالك الرق بالعطاء لقد % % ملكت رقي ورق أحرار % % 2(@)(@@) % وقد رويت الثناء متصلا % في الجود عن مالك بن دينار % % PageV01P996 البحر : - 1(@)(@@) % أمولاي نور الدين خادمك الذي % % تغيبت عن عينيه لم يك مسرورا % % 2(@)(@@) % اذا غبت عنه خاف في عينه العمى % % وحسبك أن العين لا تبصر النورا % % PageV01P997 البحر : - 1(@)(@@) % يقول لي الحاسب المنجم ما % % تريد أنبيك عنه بالخبر % % 2(@)(@@) % عطارد الوقت أنت صاحبه % % فقلت بالله صاحب القمر % % PageV01P998 البحر : - 1(@)(@@) % عاقبت الفخر مع نحافتها % % عودية ما تغيب عن نظره % % 2(@)(@@) % حاشاه حاشاه أن يشاهده % % والعود في سمعه وفي بصره % % PageV01P999 البحر : - 1(@)(@@) % ذكرت صومي في عامين قد جمعا % % لحالتي بين ذي وصل ومهجور % % 2(@)(@@) % قد فطراني فما في ذا وذا كبد % % شتان ما بين تفطير وتفطير % % PageV01P1000 البحر : - 1(@)(@@) % يا ساكن البيت من قلبي ومن مدحي % % هذا صحيح وهذا منه منكسر % % 2(@)(@@) % إن كان إفراط حبي فيك صير لي % % ذنبا فأهلا بذنب ليس يغتفر % % PageV01P1001 البحر : - 1(@)(@@) % رق النسيم كرقتي من بعدكم % % فكأننا في حبكم نتعاير % % 2(@)(@@) % ووعدت بالسلوان واش عابكم % % فكأننا في كذبنا نتخاير % % PageV01P1002 البحر : - 1(@)(@@) % لو أن قومي في حال يساعدهم % % في الخير والشر لم أحذر من الضير % % 2(@)(@@) % لكن قومي وان كانوا ذوي عدد % ليسو من الشر في شيء ولا الخير % % PageV01P1003 البحر : - 1(@)(@@) % سألت مصاحبي عدسا مصفى % % فأبدى لي بذا فرحا كبيرا % % 2(@)(@@) % ولا عدسا رأيت له وأما % % مصفاه فصفى لي كثيرا % % PageV01P1004 البحر : - 1(@)(@@) % تهن صوما سعيدا % % في رفعة وسرور % % 2(@)(@@) % ولي سماء لهاة % % فهل ترى من فطور % % PageV01P1005 البحر : - 1(@)(@@) % ياغادرا بي ولم أغدر بصحبته % % وكان مني مكان السمع والبصر % % 2(@)(@@) % قد كنت من قلبك القاسي إخال جفا % فجاء 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms199# ما خلته نقشا على حجر % % PageV01P1006 البحر : - 1(@)(@@) % تناسبت فيمن تعشقته % % ثلاثة تعجب كل البشر % % 2(@)(@@) % من مقلة سهم ومن حاجب % % قوس ومن نغمة صوت وطر % % PageV01P1007 البحر : - 1(@)(@@) % محوا شعرالمليح وكان مما % % يقر نواظرا ويسر فكره % % 2(@)(@@) % فليت يد المزين فيه أضحت % % كما قالوا معلقة بشعره % % PageV01P1008 البحر : - 1(@)(@@) % أمولاي عندي للثنا قصائد % % تريك رياض اللفظ باسمة الزهر % % 2(@)(@@) % وتشتاق من احسانك الحلو رسمها % % ولا عجب شوق الرياض إلى القطر % % PageV01P1009 البحر : - 1(@)(@@) % وحقك ما أخرت عنك لجفوة % % ولكن لوحل عن حيا يتحدر % % 2(@)(@@) % أعيد به شخصي لأول خلقه % % فها أنا من طين وماء مصور % % PageV01P1010 البحر : - 1(@)(@@) % رأيت في قار رشا فاتنا % فيا عنا قلبي وتذكاري % % 2(@)(@@) % متى أراني في الدجى راكعا % من خلف ذاك الرشأ القاري % % PageV01P1011 البحر : - 1(@)(@@) % صاح هذي أواخر العمر قد و % % لى وهذي أواخر الأشعار % % 2(@)(@@) % أنجم قلتها أوان مشيبي % % فهي لا شك أنجم الأسحار % % PageV01P1012 البحر : - 1(@)(@@) % عرج على حرم المحبوب منتصبا % لقبلة الحسن واعذرني على سهري % % 2(@)(@@) % وانظر إلى الخال فوق الثغر دون لمى % % تجد بلالا يراعي الصبح في السحر % % PageV01P1013 البحر : - 1(@)(@@) % سائلي عن شرح حالي بعد من % % خلفوني مفردا بين الورى % % 2(@)(@@) % لا أرى العيش يساوي حبة % بعد ما جاءت قلوب في الثرى % % PageV01P1014 البحر : - 1(@)(@@) % جار الزمان على بعدكم % % فلقيت ذاك الجور بالشكر % % 2(@)(@@) % لو طاب طاب لي الحياة اذا % ولقيتكم بفضيحة العذر % % PageV01P1015 البحر : - 1(@)(@@) % يفيض جفني اذا ما % % رأى لشعر ضفيره % % 2(@)(@@) % فياله من غدير % % ويا له من غديره % % PageV01P1016 البحر : - 1(@)(@@) % حبذا الليل وكاسات الطلا % % مشرقات كاللآلي الزاهره % % 2(@)(@@) % يا له من جنح ليل قد بدت % % فيه ساعات نهار دائره % % PageV01P1017 البحر : - 1(@)(@@) % كان لي مال ولبس % قبل تهيامي وسكري % % 2(@)(@@) % فسبكت المال طاسا % % وصبغت اللبس خمري % % PageV01P1018 البحر : - 1(@)(@@) % يممت بابك وهي مني عادة % % معروفة في حالة الاعسار % % 2(@)(@@) % فامدد إلى القلم اليمين فانها % % نعم اليمين تكفلت بيساري % % PageV01P1019 البحر : - 1(@)(@@) % يبقى الوزير بهاء الدين ما بقيت % % زهر النجوم ويفنى أكثر البشر % % 2(@)(@@) % وقد تفاءلت من طول البقاء له % % إذ قال عنه الورى هذا أخو الخضر % % PageV01P1020 البحر : - 1(@)(@@) % تركت المال والجاه % % لأهل القدر والقدره % % 2(@)(@@) % فحسبي من حمى كسر % وحسبي من غنى كسره % % PageV01P1021 البحر : - 1(@)(@@) % لقدج أصبحت في حال 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms200# % % يرق لمثلها الحجر % % 2(@)(@@) % مشيب وافتقار يد % فلا عين ولا أثر % % PageV01P1022 البحر : - 1(@)(@@) % قفانا عجبا من هامل الغيث انه % % لاحسن شيء يعجب العين والفكرا % % 2(@)(@@) % يمد على الآفاق بيض خيوطه % % فينسج منها للثرى حلة خضرا % % PageV01P1023 البحر : - 1(@)(@@) % ليت شعري إلى متى أتشكى % % سفرا ماله ولو مت آخر % % 2(@)(@@) % بطن ساري الوحوش فما أب % % رح في الموت والحياة مسافر % % PageV01P1024 البحر : - 1(@)(@@) % لا يبرح الناس في محل وفي شظف % % حتى يجدد لي في وجهة سفر % % 2(@)(@@) % هناك تلقى غوادي المزن هاطلة % % الحمد لله بي يستنزل المطر % % PageV01P1025 البحر : - 1(@)(@@) % دعوا شبيه الغزال يرمي % % في مهجتي بالنفار جمرا % % 2(@)(@@) % تالله لا فاتني لقاه % % وعين كيسي عليه حمرا % % PageV01P1026 البحر : - 1(@)(@@) % بين أجفان ابن عمرو وسواد % % دائر في كل عقل بخمر % % 2(@)(@@) % كلما طاف على الصب غنى % % أسقينها يا سواد بن عمرو % % PageV01P1027 البحر : - 1(@)(@@) % أرسلته نعم الجلي % % س اذا تغيرت البشر % % 2(@)(@@) % يبقى على سنن الوفا % % أبدا ويقنع بالنظر % % PageV01P1028 البحر : - 1(@)(@@) % رايتك صدر الدين غيث مكارم % % فعرضت آمالي إلى طلب القطر % % 2(@)(@@) % و أملت أن تجلي علي كنافة % % وأحسن ما تجلى الكنافة في صدر % % PageV01P1029 البحر : - 1(@)(@@) % سواد الشعر بياض جسم % % تجلى فيهما الرشأ الغرير % % 2(@)(@@) % و قيل عبية فحلفت أني % % وكل العالمين لها فقير % % PageV01P1030 البحر : - 1(@)(@@) % و أبيض شعره طويل % % والخد قد زانه العذار % % 2(@)(@@) % كالشمس طابت ربيع وقت % % واعتدل الليل والنهار % % PageV01P1031 البحر : - 1(@)(@@) % بروحي جيرة أبقوا دموعي % % وقد رحلوا بقلبي واصطباري % % 2(@)(@@) % كأنا للمجاورة اقتسمنا % % فقلبي جارهم والدمع جاري % % PageV01P1032 البحر : - 1(@)(@@) % سبتني صفات السكري الذي حكى % % بضاعته حتى عدمت قراري % % 2(@)(@@) % مكرر لفظ في ثنيات مبسم % % وأحمر خد في نبات عذار % % PageV01P1033 البحر : - 1(@)(@@) % عجبت لو صاف الذي قد هويته % % وليس بمحتاج لوصف مقرر % % 2(@)(@@) % ببدر ونور البدر واصف نفسه % % وحلو وحلو لا يقاس بسكر % % PageV01P1034 البحر : - 1(@)(@@) % و قحبة في حرها % % حر ينافى ذكرها % % 2(@)(@@) % ان قلت ما اقبحها % % قلت وما أحرها % % PageV01P1035 البحر : - 1(@)(@@) % قل للامام الذي جلت صنائعه % % عندي وعند عفاة البدو والحضر % % 2(@)(@@) % يا من أغاث بذي القرنين اضحيتي % % بقيت للدين والدنيا بقا الخضر % % PageV01P1036 البحر : - 1(@)(@@) % ناديتها ولها بين السمان حر % % مثر بحق الهوى جودي على ضرري % % 2(@)(@@) % فاستضحكت ثم قالت وهي شادنة % % ان الذي 