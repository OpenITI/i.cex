@)(@@) % ولما وقفت على الديار مناديا % قلبي المتيم من ورا حجراتها % % 3(@)(@@) % دار عرفت الوجد منذ أتيتها % % زمن الوصال فليتني لم آتها % % 4(@)(@@) % حيث الظبا وكواعب وحدائق % أنى التفت رتعت في جناتها % % 5(@)(@@) % والراح هادية السرور إلى الحشا % % مثل الكواكب في أكف سقاتها % % 6(@)(@@) % لا أنظم الأحزان في أيامها % % أو ما 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms60# ترى كسرى على كاساتها % % 7(@)(@@) % كم ليلة عاطيت صورته طلا % كادت تحرك معطفيه بذاتها % % 8(@)(@@) % فلئن بكيت فان هذا الدمع من % % ذاك الحباب يفيض من جنباتها % % 9(@)(@@) % مالي وما للهو بعد مفارق % قد نفرت غربانها ببزاتها % % 10(@)(@@) % والشيب في فودي يخط أهلة % معنى المنون يلوح من نوناتها % % PageV01P304 11(@)(@@) % سقيا لروضات الشباب وان جنت % % هذي الشجون على قلوب جناتها % % 12(@)(@@) % ولدولة الملك المؤيد إنها % % جمعت فنون المدح بعد شتاتها % % 13(@)(@@) % ملك ليمناه عوائد أنعم % ألفت نحاة الجود فيض صلاتها % % 14(@)(@@) % ما قال إلا في مبادرة العطا % % وتناول الأمداح هاك وهاتها % % 15(@)(@@) % شدت لساحته الرحال ففعلها % % يقضي بنصر الحرف نحو جهاتها % % 16(@)(@@) % أكرم بساحته التي لاصدح من % % ورق الثنا إلا على روضاتها % % 17(@)(@@) % غذي الرجاء نباتها فانظر لمن % % وشاه من مدح فم ابن نباتها % % 18(@)(@@) % واهرع إلى الشخص الذي قد ألفت % % كل القلوب له على رغباتها % % 19(@)(@@) % واذا الفتى اجتذب القلوب سعت إلى % % دينار راحته خطى حباتها % % 20(@)(@@) % واذا حلى الملك المؤيد أشرقت % % فاخشع لما تمليه من آياتها % % PageV01P305 21(@)(@@) % شرف مثال النجم دون مثاله % ولها يضيع الغيث في قطراتها % % 22(@)(@@) % لم يكف أن جلى الخطوب عن الورى % % حتى جلا بعلومه ظلماتها % % 23(@)(@@) % لله فيه سريرة مكنونة % فصفاتها الإعياء دون صفاتها % % 24(@)(@@) % لا تطلبن من القرائح حصر ما % % أفضى اليه وعد عن إعناتها % % 25(@)(@@) % ركعت لذكراه الحروف فلم تكد % % تتبين الألفات من دالاتها % % 26(@)(@@) % وتقشعت أنواء كل غمامة % وهباته تجري على عاداتها % % 27(@)(@@) % ياابن الملوك الناشرين لبيتهم % % سيرا تبيض من وجوه رواتها % % 28(@)(@@) % مت الفقير إلى يديك بمنة % إذ كان صنع الجود من لذاتها % % 29(@)(@@) % وصبت إلى لقياك غير ملولة % نفس رأت جدواك أصل حياتها % % 30(@)(@@) % لا نعتب الأيام كيف تقلبت % % بالقاطنين وأنت من حسناته % % PageV01P306 البحر : - 1(@)(@@) % قضى وما قضيت منكم لبانات % متيم عبثت فيه الصبابات % % 2(@)(@@) % ما فاض من جفنه يوم الرحيل دم % الا وفي قلبه منكم جراحات % % 3(@)(@@) % غبتم فغابت مسرات القلوب فلا % % أنتم بزعمي ولا تلك المسرات % % 4(@)(@@) % أحبابنا كل عضو في محبتكم % % كليم وجد فهل للوصل ميقات % 5(@)(@@) % يا حبذا في الصبا عن حيكم خبر % وفي بروق الغضا منكم اشارات % % 6(@)(@@) % وحبذا زمن اللهو الذي انقرضت % % أوقاته الغر والأعمال 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms61# نيات % % 7(@)(@@) % حيث المنازل روضاة مدبجة % وحيث جاراتها غيث سحابات % % 8(@)(@@) % أيام ما شعر البين المشت بنا % % ولا خلت من مغاني الانس أبيات % % 9(@)(@@) % حيث الشباب قضاياه منفذة % وحيث لي في الذي أهوى ولا يات % % 10(@)(@@) % وحيث أسعى لاوطان الصبى مرحا % ولي على حكم أيامي ولا يات % % PageV01P307 11(@)(@@) % ورب حانة خمار طرقت ولا % % حانت ولا طرقت للقصف حانات % % 12(@)(@@) % سبقت قاصد مغناها وكنت فتى % إلى المدام له بالسبق عادات % % 13(@)(@@) % أعشو إلى ديرها الأقصى وقد لمعت % % تحت الدجى فكأن الدير مشكاة % % 14(@)(@@) % واكشف الحجب عنها وهي صافية % لم يبق في دنها إلا صبابات % % 15(@)(@@) % راح زحفت على جيش الهموم بها % % حتى كأن سنا الأكواب رايات % % 16(@)(@@) % وبت أجلو على الندمان رونقها % % حتى أصبحوا من قبل ماباتوا % % 17(@)(@@) % مصونة السر ماتت دون غايتها % % حاجات قوم وللحاجات أوقات % % 18(@)(@@) % تجول حول أوانيها أشعتها % % كأنما هي للكاسات كاسات % % 19(@)(@@) % وتصبج الشرب صرعى دون مجلسها % % وهي الحياة كأن الشرب أموات % % 20(@)(@@) % تذكرت عند قوم دوس أرجلهم % % فاسترجعت من رؤس القوم ثارات % % PageV01P308 21(@)(@@) % واستضحكت فلها في كل ناحية % هبات حسن وفي الآناف هبات % % 22(@)(@@) % كأنها في أكف الطائفين بها % % نار تطوف بها في الأرض جنات % % 23(@)(@@) % من كل أغيد في ديناروجنته % % توزعت من قلوب الناس حبات % % 24(@)(@@) % مبلبل الصدغ طوع الوصل منعطف % % كأن أصداغه للعطف واوات % % 25(@)(@@) % ترنحت وهي في كفيه من طرب % حتى لقد رقصت تلك الزجاجات % % 26(@)(@@) % وقمت أشرب من فيه وخمرته % شربا تشن به في العقل غارات % % 27(@)(@@) % وينزل اللثم خديه فينشدها % % هي المنازل لي فيها علامات % % 28(@)(@@) % سقيا لتلك اللييلات التي سلفت % % فإنما العمر هاتيك اللييلات % % 29(@)(@@) % تقاصرت عن معاليها الدهور كما % % تقاصرت عن كمال الدين سادات % % 30(@)(@@) % حبر رأينا يقين الجود من يده % وأكثر الجود في الدنيا حكايات % % PageV01P309 31(@)(@@) % محجب العز في أيام سؤدده % للعز محو وللأمداح إثبات % % 32(@)(@@) % سما على الخلق فاستسقوا مواهبه % % لا غرو أن تسقي الأرض السموات % % 33(@)(@@) % واستشرف العلم مصقولا سوالفه % % بدهره وزهت لليمن وجنات % % 34(@)(@@) % واستأنف الناس للأيام طيب ثنا % من بعد ما كثرت فيها الشكايات % % 35(@)(@@) % لا يختشي موت نعمى كفه بشر % كأن أنعمه للخلق أقوات % % 36(@)(@@) % ولا تزحزح عن فضل شمائله % كأنها لبدور 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms62# الفضل هالات % % 37(@)(@@) % يا شاكي الدهر يممه وقد غفرت % % من حول أبوابه للدهر زلات % % 38(@)(@@) % ويا أخا الذنب قابل عفوه أمما % أيان لا ملجأ أو لا مغارات % % 39(@)(@@) % ولا يغرنك غفران فتغمره % % فللعقار على لين شرارات % % 40(@)(@@) % ويا فتى العلم إن أعيتك مشكلة % هذا حماه المرجى والهدايات % % PageV01P310 41(@)(@@) % ويا أخا السعي في علم وفي كرم % % هذي الهدايا وهاتيك الهدايات % % 42(@)(@@) % لا تطلبن من الأيام مشبهه % ففي طلابك للأيام إعنات % % 43(@)(@@) % ولا تصخ لأحاديث الذين مضوا % % ألوى العنان بما تملى الروايات % % 44(@)(@@) % طالع فتاويه واستنزل فتوته % تلق الافادات تتلوها الإفادات % % 45(@)(@@) % وحبر الوصف في فضل بأيسره % % تكاد تنطق بالوصف الجمادات % % 46(@)(@@) % فتى تناول صحف المجد أجمعها % % من قبل ما رقمت في الخد خطات % % 47(@)(@@) % حامي الديار بأقلام مسددة % % تأخر الشك عنها والغوايات % % 48(@)(@@) % حامي الذمار بأقلام لها مدد % من الهدى واسمه في الطرس مدات % % 49(@)(@@) % قويمة تمنع الاسلام من خطر % % فأعجب لها ألفات وهي لامات % % 50(@)(@@) % تعلمت بأس آساد وصوب حيا % منذ اغتدت وهي للآساد غابات % % PageV01P311 51(@)(@@) % وعودت قتل ذي زيغ وذي خطل % % كأنها من كسير الحظ فضلات % % 52(@)(@@) % وجاورت يد ذاك البحر فابتسمت % % هنالك الكلمات الجوهريات % % 53(@)(@@) % لفظ تشف عن المعنى لطافته % % كما تشف عن الراح الزجاجات % % 54(@)(@@) % عوذ بياسين أطراسا براحته % % فيها من الزخرف المشهود آيات % % 55(@)(@@) % واستجل منطقة الأعلى وطاعته % % تجلى الشكوك ولا تشكى الدجنات % % 56(@)(@@) % أغر يهوى معاد الذكر عنه اذا % % قيل المعادات أخبار معادات % % 57(@)(@@) % تعج طلابه من حول ساحته % % فما تفهم من ناديه أصوات % % 58(@)(@@) % وفد وخيل وآبال محبرة % % مدحا قد اختلفت فيه العبارات % % 59(@)(@@) % اذا تعمق في نعماء ضاعفها % % كأن كل نهايات بدايات % % 60(@)(@@) % وان خطا للمعالي خطوة بهرت % % كأن أول ما يخطوه غايات % % PageV01P312 61(@)(@@) % لا عيب فيه سوى علياء معجزة % % فيها لأهل العلى قدما نكايات % % 62(@)(@@) % يجري دم التبر للنزال بعدهم % هذا هو الجود لاناب ولا شاة % % 63(@)(@@) % ويجتلى من سجاياه التي اشتهرت % % للضد هلك وللمعتز منجاة % % 64(@)(@@) % فلا وقاية تحمي وفد راحته % % بلى على عرضه الأنقى وقايات % % 65(@)(@@) % ولا مثال لما شادت عزائمه % % إلا اذا نيلت الشهب المنيرات % % 66(@)(@@) % في كل يوم دروس من فوائده % % ومن بواديء نعماه إعادات % % 67(@)(@@) % صلى وراء إياديه 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms63# الحياء فعلى % % تلك الأيادي من السحب التحيات % % 68(@)(@@) % وصد عما يروم اللوم نائله % % فما تفيد ولا تجدي الملامات % % 69(@)(@@) % يرام تأخير جدواه وهمته % تقول إيها فللتأخير آفات % % 70(@)(@@) % من معشر نجب ماتوا وتحسبهم % % للمكرمات وطيب الذكر ما ماتوا % % PageV01P313 71(@)(@@) % ممدحين لهم في كل شارقة % بر وتحت سجوف الليل إخبات % % 72(@)(@@) % لا تشتكي الجور الا من تعاندهم % % ولا تذمهم في المحل جارات % % 73(@)(@@) % ولا تسوق رياح المزن أيسر ما % % ساقته تلك النفوس الأريحيات % % 74(@)(@@) % بيت أتمته أوصاف الكمال كما % % تمت بقافية المنظوم أبيات % % 75(@)(@@) % ما روضة قلدت إحياء سوسنها % % من السحاب عقود لؤلؤيات % % 76(@)(@@) % وخطت الريح خطا في مناهلها % % كأن قطر الغوادي فيه جريات % % 77(@)(@@) % وللجداول تصفيق بساحتها % % والقطر روض وللأطيار رنات % % 78(@)(@@) % يوماأ بأبهج من أخلاقه نظرا % أيام تنكر أخلاق سريات % % 79(@)(@@) % ولا الغيوث بأسخى من عوائده % % أيام تعيي السجيات السخيات % % 80(@)(@@) % ولا الشموس بأجلى من فضائله % أيام تدجو الظنون اللوذعيات % % PageV01P314 81(@)(@@) % ولا النجوم بأنآى من مراتبه % % أيام تقتصر الأيدي العليات % % 82(@)(@@) % قدر علا فرأى في كل شمس ضحى % جماله فكأن الشمس مرآة % % 83(@)(@@) % وهمة ذكرها سار وأنعمها % % فحيثما كنت أنهار وروضات % % 84(@)(@@) % يا ابن المدائح إن أمدح سواك بها % % فتلك فيهم عوار مستردات % % 85(@)(@@) % لي نية فيك إذ لي فيهم كلم % وانما لبني الأعمال نيات % % 86(@)(@@) % الله جارك من ريب الزمان لقد % % تجمعت للمعالي فيك أشتات % % 87(@)(@@) % جاورت بابك فاستصلحت لي زمني % % حتى صفا وانقضت تلك العداوات % % 88(@)(@@) % ولا طفتني الليالي فهي حينئذ % % من بعد أهلي عمات وخالات % % 89(@)(@@) % ونطقتني الأيادي بالعيون ثنى % فللكواكب كالآذان إنصات % % 90(@)(@@) % وبت لا أشتكي حالا اذا شكيت % % في باب غيرك أحوال وحالات % % PageV01P315 91(@)(@@) % إلا ذوي كلم لو أن محتسبا % تكلمت من جميع القوم هامات % % 92(@)(@@) % يزاحمون بأشعار ملفقة % كأنها بين أهل الشعر حشوات % % 93(@)(@@) % ويطرحون على الأبواب من حمق % قصائدا هي في التحقيق بابات % % 94(@)(@@) % من كل أبله لكن ما لفطنته % % كالبله في هذه الدنيا إصابات % % 95(@)(@@) % يحم حين يعاني نظم قافية % عجزا فتظهرها تلك الخرافات % % 96(@)(@@) % ويغتدي فكره المكدود في حرق % وقد أحاطت بما قال البرودات % % 97(@)(@@) % وقد يجيء بمعنى بعد ذا حسن % لكن على كتفيه منه كارات % % 98(@)(@@) % أعيذ مجدك من ألفاظهم 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms64# فلها % % جنى كأن معانيهم جنايات % % 99(@)(@@) % لا يغرهم بندى يأتيهم فكفى % % مدحا بأن يتأتى منك إنصات % % 100(@)(@@) % ان لم تفرق بفضل بين نظمهم % وبين نظمي فما للفضل لذات % % PageV01P316 101(@)(@@) % حاشاك أن تتساوى في جنابك من % % قصائد الشعر سوآت وجبهات % % 102(@)(@@) % خذها عروسا لها في كل جارحة % لواحظ وكؤس بابليات % % 103(@)(@@) % أوردت سؤددك الأعلى مواردها % % وللسها في بحار الأفق عبات % % 104(@)(@@) % شماء يركع نظم الناظمين لها % % كأنما ألفات الخط دالات % % 105(@)(@@) % نعم الفتى أنت يستصغى الكلام له % % حتى تسير له في العقل سورات % % 106(@)(@@) % ويطرب المدح فيه حين أكتبه % % كأن منتصب الأقلام نايات % % 107(@)(@@) % ما بعد غيثك غيث يستفاد ولا % % من بعد إثبات قولي فيك إثبات % % 108(@)(@@) % خصصت بالمدح اللاتي قد ارتفعت % % مني الثناء ومن نعماك آلات % % 109(@)(@@) % فسد وشد وابق ما دام الزمان ففي % % بقياك للدين والدنيا عنايات % % 110(@)(@@) % حزت المحامد حتى ما لذي شرف % من صورة الحمد لا جسم ولا ذات % % PageV01P317 البحر : - 1(@)(@@) % نزحت لبين النازحين مدامعي % % وعادوا فعادت رجعا عبراتي % % 2(@)(@@) % وكنت من الأفكار والدمع بعدهم % % كأني في بحر من الظلمات % % 3(@)(@@) % كأني معكوس من السهد والأسى % % فليلي معاشي والنهار سباتي % % 4(@)(@@) % بعاد وقرب فيهما النوح والبكا % % أعلم ورق الطير في الوكنات % % 5(@)(@@) % وزير العلى والعلم والبر والتقى % % على أيمن الأوقات والحركات % % 6(@)(@@) % قدمت بوفد الرأي والعزم والندى % % وقد كان يكفي وافد البركات % % 7(@)(@@) % قدوم الحيا يروي ظما كل منبت % ضعيف فيا بشرى لضعف نبات % % 8(@)(@@) % ذخرنا نداه في الورى وولاءه % ليوم حياة أو ليوم ممات % % 9(@)(@@) % ولي غمام أو ولي عبادة % ترجيه للإحسان والحسنات % % 10(@)(@@) % اذا بسطت كفاه باليمن للورى % % رجوا بسطها للأمن بالدعوات % % PageV01P318 11(@)(@@) % هو المرء خاف الله في كل حالة % فخافته حتى الأسد في الفلوات % % 12(@)(@@) % وقوي ضعيف الحال منا بدهره % % خلا ما بلحظ الغيد من فترات % % 13(@)(@@) % فلا كلم الأعداء جانب جاهه % % ودام مطاعا نافذ الكلمات % % PageV01P319 البحر : - 1(@)(@@) % من لصب أدنى البعاد وفاته % % مذ عداه وصل الحبيب وفاته % % PageV01P320 البحر : - 1(@)(@@) % ما لظبي الحمى اليه التفاته % % بعد ما كدر المشيب حياته % % 2(@)(@@) % لهيج بالهوى وإن نفرت أي % % دي الليالي غزاله ومهاته % % 3(@)(@@) % كلما قيل قد سلا عن فتاة % % عاده الحب فاستجد فتاته % % 4(@)(@@) % ما على 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms65# من عصى النهى فيه رأي % لو عصى في الهوى علي نهاته % % 5(@)(@@) % بأبي فاتر اللحاظ غرير % % رام تشبيهه الغزال ففاته % % 6(@)(@@) % صائل الحسن إن رنا وتثنى % % سل أسيافه وهز قناته % % 7(@)(@@) % لعيون الورى بخديه ورد % طالما عاقب السهاد جناته % % 8(@)(@@) % ساقي الراح باد كار لقاه % % لا عدمنا ذاك اللقا وسقاته % % 9(@)(@@) % هات كأسي وإن لحنت من ال % % سكر فلا تلحني إذا قلت هاته % % 10(@)(@@) % أنا فرع من النبات إذا ما % % هجرته السقاة خاف مماته % % PageV01P321 11(@)(@@) % أنبتته نعمى الصفي وأحيت % % ذكر أسلافه فسرت نباته % % 12(@)(@@) % حبذا من إمام لفظ وفضل % نشر الذكر في البلاد دعاته % % 13(@)(@@) % ناظم يشتكي الوليد قصورا % حين تتلو رواته أبياته % % 14(@)(@@) % من أناس كانوا اذا عزم الده % % و وحامى كفاته وحماته % % 15(@)(@@) % إن تعالى الثناء كانوا بنيه % % أو تعالى الفخار كانوا بناته % % 16(@)(@@) % قوضوا وابتدى فريد صفات % % طال أو تقرع الخطوب صفاته % % 17(@)(@@) % ما حمدنا للدهر إلا دواه % ولرقم الطروس إلا دواته % % 18(@)(@@) % سار علم القريض يطلب حجا % فغدى باب فضله ميقاته % % 19(@)(@@) % تارة من حماة يدعى وطورا % يستحث الثنا اليه حداته % % 20(@)(@@) % يا مفيد الورى لآلىء بحر % يعرف الذوق عذبه وفراته % % PageV01P322 21(@)(@@) % وصل العبد من قريضك بر % سر أحبابه وساء عداته % % 22(@)(@@) % رائق الكاس غير أن عتابا % طالما للمحب كان قذاته % % 23(@)(@@) % أي ذنب لساتر نظمه عن % % ك ومن ذا يهدي لطود حصاته % % 24(@)(@@) % خل هذا وانعم بباب مليك % % عم بالعدل والنوال عفاته % % 25(@)(@@) % لو طلبنا له شبيها من الده % % ر لكنا كطالب إعناته % % 26(@)(@@) % زوجتنا حماة نعمى يديه % % فغدى كلنا يحب حماته % % PageV01P323 البحر : - 1(@)(@@) % أقيما فروض الحزن فالوقت وقتها % % لشمس ضحى عند الزوال ندبتها % % 2(@)(@@) % ولا تبخلا عني بانفاق أدمع % ملونة أكوى بها إن كنزتها % % 3(@)(@@) % لغائبة عني وفي القلب شخصها % % كأني من عيني لقلبي نقلتها % % 4(@)(@@) % يقولون كم تجري لجارية بكى % % وما علموا النعمى التي قد فقدتها % % 5(@)(@@) % ملكت جهاتي الست فيك محبة % % فأنت وما أخطا الذي قال ستها % % 6(@)(@@) % الا في سبيل الله شمس محاسن % % وان لم تكن شمس النهار فأختها % % 7(@)(@@) % تعرفتها دهرا يسيرا فأعقبت % % دوام الأسى ياليتني لا عرفتها % % 8(@)(@@) % وقال أناس إن في الدمع راحة % وتلك لعمري راحة قد نكرتها 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms66# % % 9(@)(@@) % هل الدمع إلا مقلة قد أذبتها % % عليك وإلا مهجة قد غسلتها % % 10(@)(@@) % نصبت جفوني بعد بعدك للدجى % % وأما أحاديث الكرى فرفعتها % % PageV01P324 11(@)(@@) % وقال زماني هاك بعد تنعم % كؤوس الأسى والحزن ملآى فقلت ها % % 12(@)(@@) % بكيتك للحسن الذي قد شهدته % % وللشيم الغر التي قد عهدتها % % 13(@)(@@) % وروضة لحد حلها غصن قامة % لعمري لقد طابت وقد طاب نبتها % % 14(@)(@@) % وحزن فلاة يممته وانما % % ديار الظبا حزن الفلاة وموتها % % 15(@)(@@) % كلانا طريح الجسم بال فلو درت % % إذا ندبتني في الثرى من ندبتها % % 16(@)(@@) % بروحي من أخفي إذا زرت قبرها % % جواي ولو أعلمتها لعققتها % % 17(@)(@@) % خبية حسن كنت مغتبطا بها % % ولكن برغمي في التراب دفنتها % % 18(@)(@@) % وآنسة قد كان لي لين عطفها % % فلم يبق لي إلا نداها ونعتها % % 19(@)(@@) % أنادي ثرى الحسناء والترب بيننا % % وعز على صمت المتيم صمتها % % 20(@)(@@) % كفى حزنا أن لا معين على الأسى % % سوى أنني تحت الظلام بعثتها % % PageV01P325 21(@)(@@) % وتنميق ألفاظ عليك رقيقة % % كأني من نثر الدموع نظمتها % % 22(@)(@@) % قضيت فما في العيش بعدك لذة % % ولا في أمان لو بقيت بلغتها % % 23(@)(@@) % سلام على الدنيا فقد رحل الذي % % تطلبتها من أجله وأردتها % % PageV01P326 البحر : - 1(@)(@@) % بالنصر والإقبال والبركات % % سكنى القصور ومنزه الحركات % % 2(@)(@@) % في ظل ملك بالسعود تمنحت % % في سائر الحركات والسكنات % % 3(@)(@@) % وعمائر موصولة بعمائر % طيارة في الذكر والغرفات % % 4(@)(@@) % والناس اما مادح أو مطرب % بثنائه الموصول بالنغمات % % 5(@)(@@) % و الكل بين يديك خادم صنعة % ينشي وينشد والزمان مؤاتي % % 6(@)(@@) % يا جود سلطان العباد ومدحنا % % طاب الصبوح لنا فهاك وهات % % 7(@)(@@) % وأرى صبوحك كاس أجر أو نثى % فاشرب هنيئا يا أخا اللذات % % PageV01P327 البحر : - 1(@)(@@) % بث المشيب على الشجي بزاته % % وبدا فنفر ظبيه ومهاته % % 2(@)(@@) % لامت يا لاحي الشجي على الأسى % % وحييت بعد الظاعنين حياته % % 3(@)(@@) % أوعشت عيشي عند جفوة سيد % عودت منه ميله ولهاته % % 4(@)(@@) % هذاك قد خصف الحيا أوراقه % % وأنا الذي هشم الجفاء نباته % % 5(@)(@@) % وأتى إلى حجر الكرام فطاف في % % حج الرجاء معاوذا ميقاته % % 6(@)(@@) % سادوا الزمان كما ترى عباده % % وسراته وهداته وكماته % % 7(@)(@@) % لازال سار نور بيتهم ولا % % عدم النزيل وسامع أبياته % % PageV01P328 البحر : - 1(@)(@@) % فاز الذي شغل الأسى أوقاته % % لو كان أشبعه الاسى أوقاته % % 2(@)(@@) % ياليت لو 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms67# كان المنام معاشه % % طيفا ولا كان النهار سباته % % 3(@)(@@) % قيراط وصل كنت أجعله على % % قنطار هجران يغير ذاته % % 4(@)(@@) % ياسيد الأدباء لا شكا لقد % % جازاك من لم يدر منك شكاته % % 5(@)(@@) % أنظر لخليك اللذين تحاربا % % أدبا وهب لكليهما ما فاته % % 6(@)(@@) % من كان من قش ترعرع نبته % % أو كان من حجر ألنت صفاته % % 7(@)(@@) % عذرا لمن هزت هباتك طوده % % ولمن أطاش ندى يديك نباته % % PageV01P329 البحر : - 1(@)(@@) % أهلا بركب القادمي % % ن زها وأزهر وقته % % 2(@)(@@) % لبني علي انه % % نعم الولي علمته % % 3(@)(@@) % ياقادما ما زلت في % % نعماه منذ عرفته % % 4(@)(@@) % ومدحت حين قصدته % % وقصدت حين مدحته % % 5(@)(@@) % هنئت حجا من شذا % % عرفات قد عرفته % % 6(@)(@@) % وبعثت من فرحي خرو % % فا لو قدرت لزدته % % 7(@)(@@) % لو أنه ابن خروف نح % % وي النحاة بعثته % % PageV01P330 البحر : - 1(@)(@@) % شكرا لنعماك وان أفحمت % % لساني الشاكر عما نويت % % 2(@)(@@) % وعجزت مدحي لهاك التي % % مدحتها بالعجز ثم اكتنيت % % 3(@)(@@) % يفديك من رمت حماه فلو % % هجوت مازدت على أن حكيت % % 4(@)(@@) % والله ما أنت وأهل العلا % % إذا تأملتهم وانتقيت % % 5(@)(@@) % الا كبيت الله في فضله % % على بيوت الله والكل بيت % % PageV01P331 البحر : - 1(@)(@@) % ياسيدا حلوة أمداحه % % تجمع بين الحسن والبخت % % 2(@)(@@) % لما تحلت سنه بالهنا % % لديكم في أسعد الوقت % % 3(@)(@@) % ناديت بالاسم وترخيمه % % وصحت ياستين يا ستي % % PageV01P332 البحر : - 1(@)(@@) % شكر الله أياديك التي % % عاجلت قصدي بأنواع الهبات % % 2(@)(@@) % أنت بالمعروف قد أحييتني % % وكذا الشمس حياة للنبات % % PageV01P333 البحر : - 1(@)(@@) % يقول مليح مسلم بعد كافر % % طعنت باير فائق سيف دولة % % 2(@)(@@) % فعادات سيف الدولة الطعن في العدى % % وعادات ذا طعن العدا والاحبه % % PageV01P334 البحر : - 1(@)(@@) % جدت وأفحمتني بما قد % % سمعت من لفظك المواتي % % 2(@)(@@) % فاقبله ذا سكر بياض % % ان عجز السكر النباتي % % PageV01P335 البحر : - 1(@)(@@) % أرسلت نضوا حقيرا % % ولو قدرت لزدته % % 2(@)(@@) % لو أنه ابن خروف % % نحوي مصر بعثته % % PageV01P336 البحر : - 1(@)(@@) % كتبت وقد وجدت من التشكي % % ومس السقم أكثر ماوجدتا % % 2(@)(@@) % ألم تعلم بأنك ضمن قلبي % % فما يصل السقام اليك حتى % % PageV01P337 البحر : - 1(@)(@@) % لم يبق شيبي لذة لحياتي % % والشيب صبح قاطع اللذات % % 2(@)(@@) % فارقت أيمن زوجة وعدمت من % % مغنى حماه عوائدي وصلاتي % % 3(@)(@@) % حيي الحيا أوقات تلك وهذه % % و سقى معاهد زوجتي وحماتي % % 4(@)(@@) % و لقد محا قاضي 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms68# القضاة وتاجهم % % عني مصاب الحسن والحسنات % % 5(@)(@@) % فاضت مواهبه علي ولم أسل % % و سقت مواطره الغزار نباتي % % 6(@)(@@) % و سجعت مدحا حين طوقني ندى % % إن المطوق ساجع النغمات % % 7(@)(@@) % و لئن أقل للعجز دعوى مدحتي % % فلتكثرن بصالح دعواتي % % PageV01P338 البحر : - 1(@)(@@) % هب أنها الظبي لكن غير ملتفت % فعطفها اللين هلا غير ذي عنت % % 2(@)(@@) % و قبلة بعثتها في الكرى شفة % بالليل منك فهلا عاودت شفتي % % 3(@)(@@) % كما تعاهدني فضل المواهب من % % علي أهل العلى والاسم والسمة % % 4(@)(@@) % من ابن فضل الإله المعتلي رتبا % لم يعتل مثلها نجم على الكرة % % 5(@)(@@) % من ليس ينسى نداه حال أشعث ان % % أضحى على قلة أمسى على قلت % 6(@)(@@) % لحمي وعظمي على نعماه قد نبتا % % كل النبات ولا كلت ولا نبت % 7(@)(@@) % لأشكرن أياديه بذاك وذا % % إن أحيي في هذه الدنيا وإن أمت % % PageV01P339 البحر : - 1(@)(@@) % شكت من شيبتي عين الفتاة % % فيالك ثم يا لك من قذاة % % 2(@)(@@) % و عفت الظبي أيضا لا لفكر % % يطالبنا الوداد بلا التفات % % 3(@)(@@) % و كفر ذنب أغزال تقضت % % ختام المدح في قاضي القضاة % % 4(@)(@@) % فما أسرى معالي المدح درا % % أنظمه على تاج السراة % 5(@)(@@) % إمام خزرجي البيت طافت % % على أركانه فرق العفاة % 6(@)(@@) % لهم همم بها في الفضل تروي % % عواليه الثقاة عن الثقاة % % 7(@)(@@) % حلاوة مدحه في الطيب شاعت % % و لا سيما بشكري النبات % % PageV01P340 البحر : - 1(@)(@@) % لاعب شطرنج بفصل الشتا % % عشقته ويلاه من بهته % % 2(@)(@@) % قلبي بكانون على ناره % % و سيدي يلعب في دسته % % 3(@)(@@) % دع غزلا وامدح وزير التقى % % في فضله الأوفى وفي نعته % % 4(@)(@@) % و ليهن مغنى الشام من حظه % % قدوم مولانا ومن تخته % % 5(@)(@@) % أوحشه الغيث الذي قد نأى % % و جاءه والله في وقته % % 6(@)(@@) % و ليهن مولانا بحيث انتحى % % قدر سما الكوكب في سمته % % 7(@)(@@) % من فوقه أنت بمقدار ما % % تطفيك الأبصار من تحته % % PageV01P341 البحر : - 1(@)(@@) % رب ليل زار فيه قمر % خده المحمر بالأقمار شامت % % 2(@)(@@) % ذو نطاق وسوار لم يدع % % ناطقا غيرهما عندي وصامت % % 3(@)(@@) % فاح نشرا وبدا فالبدر من % % حسد خاف ونشر الروض خافت % % 4(@)(@@) % مثلما أقبلت من مصرها % % أنجم العلم فنجم الشام شامت % % 5(@)(@@) % يا بني الأنصار طابت وزكت % % في العلى منكم فروع 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms69# ومنابت % % 6(@)(@@) % لو سكتنا عن ثناء لغدا % % فضلكم بين البرايا غير ساكت % % 7(@)(@@) % سؤود حسن بيتا ثابتا % فكفاكم منه حسان بن ثابت % % PageV01P342 البحر : - 1(@)(@@) % حبذا يوم وصال % % يصل السعد وقيته % % 2(@)(@@) % آه من رخص محب % باعه الصبر وليته % % 3(@)(@@) % بعت في العشاق روحي % % يا حبيبي بستيته % % PageV01P343 البحر : - 1(@)(@@) % مولاي أدركني بفضل الدعا % % و الجاه تنفع بهما غلتي % % 2(@)(@@) % جرايتي ضاعت فآها لها % % و بعد هذا رمدت مقلتي % % 3(@)(@@) % ففي صباحي ومسائي معا % أصيح يا عيني ويا غلتي % % PageV01P344 البحر : - 1(@)(@@) % رعاك الله كم ترعى أموري % % و تجمع فكرتي بعد الشتات % % 2(@)(@@) % أما وسيادة لك في البرايا % % لها فخر على ماض آت % % 3(@)(@@) % لقد أحيي ندى كفيك حالي % % كذاك الغيث يحيي للنبات % % PageV01P345 البحر : - 1(@)(@@) % ياشمس فضل واضح لي حسد % بولاية المجدي كانوا كالشمت % % 2(@)(@@) % شكرا لأنعمك التي قد أفصحت % % عن شكرها حتى جوارحي الصمت % % 3(@)(@@) % مزجت بنطقي في الورى وجوارحي % % فلأ شكرنك ما حييت وإن أمت % % 4(@)(@@) % كان لمولانا كما قد درى % % جد يرى للود إثباتا % % 5(@)(@@) % وكان لي جد سعيد فيا % % لهفي على جدين قد ماتا % % 6(@)(@@) % سائلي اليوم كيف حالي في القس % % م ونظارة القضاة السراة % % 7(@)(@@) % كل قاض يرى أسير شهود % وأنا شاهد أسير القضاة % % 8(@)(@@) % يا عجبا لي بعد عصر الصبا % % مخالف في كل حالاتي % % 9(@)(@@) % أصبو وقد أصبحت من نسوتي % % ما بين عماتي وخالاتي % % 10(@)(@@) % قالوا عهدناك ذا شعر نلذ به % % ما باله قد تولى حسنه الآتي % % PageV01P346 11(@)(@@) % فقلت من كثر ما أشكو به ضررا % والشعر يفسده كثر الضرورات % % 12(@)(@@) % إن أساء الحبيب قامت بعذر % وجنة منه فوقها شامات % % 13(@)(@@) % يالها وجنة أقابل منها % % حسنات تمحى بها السيآت % % 14(@)(@@) % مولاي إن الحال قد وصلت إلى % % سطرين من بيتين قد ضمنتها % % 15(@)(@@) % لم يبق عندي ما يباع بدرهم % % إلا بقية ماء وجه صنتها % % 16(@)(@@) % يقول رجائي لما دعا % % نداك لهبات تلك الهبات % % 17(@)(@@) % تناسب حال الندى والرجا % % فهذا الغمام لهذا النبات % % 18(@)(@@) % لاعيب في بعض الكرام سوى ندى % متعمق للمرء عند صلاته % % 19(@)(@@) % يعطيه من إحسانه ولربما % % آذاه كي يعطيه من حسناته % % 20(@)(@@) % إسقني صرفا من الرا % % ح تحت الهم حتا % % PageV01P347 21(@)(@@) % ودع العذال فيها % % يضربون الماء حتى % % 22(@)(@@) % أرى جلستي 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms70# عند الكمال تميتني % % غبونا ونفعي بالعلوم يفوت % % 23(@)(@@) % و ما تنفع الآداب والعلم والحجى % % وصاحبها عند الكمال يموت % % 24(@)(@@) % جنينة التين وجيرانها % % قد طيبت لذاتها وقتي % % 25(@)(@@) % وكثرت عندي ما أشتهي % % فالتين من فوقي ومن تحتي % % 26(@)(@@) % يقول الذي قد درى غربتي % % وعسري وجودك حصلته % % 27(@)(@@) % قبضت بانعامه البندقي % % فقلت نعم ثم فصلته % % 28(@)(@@) % ورثت اللفظ عن سلفي واكرم % % بآل نباته الغر السراة % 29(@)(@@) % فلا عجب للفظي حين يحلو % % فهذا القطر من ذاك النبات % % 30(@)(@@) % لم أنس مخضوبة الأطراف في يدها % % كأس لطرفي وروحي منهما قوت % % PageV01P348 31(@)(@@) % شبيه جمر على ياقوت أنملها % % ثم انطفى الجمر والياقوت ياقوت % % 32(@)(@@) % ياابن نباته جار الزمان % % وزلت وزالت قوى همتك % % 33(@)(@@) % وقد كنت ذا حكمة وانقضت % % فلا أوحش الله من خدمتك % % 34(@)(@@) % لقد أصبحت ذا عمر عجيب % أقضي فيه بالأنكاد وقتي % % 35(@)(@@) % من الأولاد خمس حول أم % فوا حرباه من خمس وست % % 36(@)(@@) % ياسيدي عطفا فاني ميت % وفي دمشق اليوم برد قد عتا % % 37(@)(@@) % زرقة جسمي وبياض ثلجها % % سنجابي الأبلق أيام الشتا % % 38(@)(@@) % قالت أريد من طبيخ قدرة % وكثرت حاجاتها وأوغلت % % 39(@)(@@) % فقلت هذي قدرة يا ستنا % % من قبل أن تمسها النار غلت % % 40(@)(@@) % مضى الافضل المرجو للبأس والندى % % وصحت على رغم العداة وفاته % % PageV01P349 41(@)(@@) % وما مات أو ماتت بحزن نساؤه % % وماتت بأحزان البلاد حماته % % 42(@)(@@) % سافرت للساحل مستبضعا % حمدا وقصدا حسن الجملة % % 43(@)(@@) % فياله من متجر رابح % ما نفقت فيه سوى بغلتي % % 44(@)(@@) % يا شهد لا والله اق % % نع أن أعاود قبلتك % % 45(@)(@@) % ما أنت عندي شهدة % % حتى أذوق عسيلتك % % 46(@)(@@) % عندي استفاد ذوو التأدب والذكا % % قولا نباتيا رعوا روضاته % % 47(@)(@@) % فأنا الحقيق بقول أحمد من إذا % % قطف الرجال القول عند نباته % % 48(@)(@@) % أفديه لاعب شطرنج قد اجتمعت % % في شكله من معاني الحسن أشتات % % 49(@)(@@) % عيناه منصوبة للقلب غالبة % والخد فيه لقتل النفس شامات % % 50(@)(@@) % حلا ثنائي على علي % كما حلا جوده المواتي % % PageV01P350 51(@)(@@) % فرحت ذا سكر بياضي % % وراح ذا سكر نباتي % % 52(@)(@@) % طلقت أبكار القوافي التي % % كم معها في بيت شعر أويت % % 53(@)(@@) % فلا ووقت كان للشعر لا % % يجمعنا من بعد ذا سقف بيت % % 54(@)(@@) % ومطالع السعدي في أفق العلى % % والملك نعم القصد والحركات 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms71# % % 55(@)(@@) % من حيث يرقم إسمه وفعاله % % فالعز والإقبال والبركات % % 56(@)(@@) % كانت للفظي رقة % ضن الزمان بما استحقت % % 57(@)(@@) % فصرفتها عن قدرتي % % وقطعتها من حيث رقت % % 58(@)(@@) % وبديع الجمال زين بخال % ساكن فوق أشرف الوجنات % % 59(@)(@@) % ان تشكى بها الحريق فمما % % فتن المؤمنين والمؤمنات % % 60(@)(@@) % قويت قوتي وقوت عائلتي % % في زمن للضعيف ممقوت % % PageV01P351 61(@)(@@) % فكيف أثني عنان قصدي عن % % بابك يا قوتي ويا قوتي % % 62(@)(@@) % فديت بليغا أهلتني سطوره % لأجنحة تسمو سمو الأهلة % % 63(@)(@@) % فأقطف من أوراقه الادب الذي % % وأسمع من ألفاظه اللغة التي % % 64(@)(@@) % في شعر مولانا السنا العالي وفي % % إنشائه الأشهى مزاج القهوة % % 65(@)(@@) % فمتى ثقل بيتا فقل ان الذي % % ومتى يدر سجعا فقل إن التي % % 66(@)(@@) % كنت في ظلمة من الحال لكن % % بين شمسين قد أضاءت حياتي % % 67(@)(@@) % وغمامين ينشآن نباتا % يثمر الأجر من جميع الجهات % % 68(@)(@@) % نباتي المناسب كيف تلقى % % شتا شام به انهشم النبات % % 69(@)(@@) % وبرقا ضاربا من فوق بشت % فضربته لعمري والعباة % % 70(@)(@@) % يا سيدي هنئت عيدا أتى % % بالسعد يجلي من جميع الجهات % % PageV01P352 71(@)(@@) % لا غرو إن أحييتني بالندى % % إن الندى والشمس محيي النبات % % 72(@)(@@) % أهوى الصغار فان لاح العذار فقل % % في لوعة خمدت من بعد ما حميت % % 73(@)(@@) % وقل لمن قال في خدي زمردة % لذاك حية ايري عنك قد عميت % % PageV01P353 البحر : - 1(@)(@@) % مكان لمولانا كما قد درى % % جد يرى للود إثباتا % % 2(@)(@@) % وكان لي جد سعيد فيا % % لهفي على جدين قد ماتا % % PageV01P354 البحر : - 1(@)(@@) % سائلي اليوم كيف حالي في القس % % م ونظارة القضاة السراة % % 2(@)(@@) % كل قاض يرى أسير شهود % وأنا شاهد أسير القضاة % % PageV01P355 البحر : - 1(@)(@@) % با عجبا لي بعد عصر الصبا % % مخالف في كل حالاتي % % 2(@)(@@) % أصبو وقد أصبحت من نسوتي % % ما بين عماتي وخالاتي % % PageV01P356 البحر : - 1(@)(@@) % قالوا عهدناك ذا شعر نلذ به % % ما باله قد تولى حسنه الآتي % % 2(@)(@@) % فقلت من كثر ما أشكو به ضررا % والشعر يفسده كثر الضرورات % % PageV01P357 البحر : - 1(@)(@@) % إن أساء الحبيب قامت بعذر % وجنة منه فوقها شامات % % 2(@)(@@) % يالها وجنة أقابل منها % % حسنات تمحى بها السيآت % % PageV01P358 البحر : - 1(@)(@@) % مولاي إن الحال قد وصلت إلى % % سطرين من بيتين قد ضمنتها % % 2(@)(@@) % لم يبق عندي ما يباع بدرهم % % إلا بقية ماء 
