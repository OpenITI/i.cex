urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms1#(@)(@)(@@) البحر : - 1(@)(@@) % رويدك عن تفنيد ذي المقلة العبرى % % وقصرك أن الدمع غاية ما نهوى % % 2(@)(@@) % ولا تبك إلا بعد طول صبابة % وحسبك من فرط الصبابة ما أبكى % % 3(@)(@@) % إذا الدمع لم يبرح محلا يحله % % سرى الدمع من أجفانه قلق المسرى % % 4(@)(@@) % حماه الكرى برق تألق بالحمى % % إذا ما خفى وهنا أبى الشوق أن يخفى % % 5(@)(@@) % وقى الله من شكوى الصبابة خلة % شكوت الذي ألقى فأضعف في الشكوى % % 6(@)(@@) % أكاتم بلوى الحب كيما أبيده % % وعينيتفيض الدمععين على البلوى % % 7(@)(@@) % أواصل فيها الدمع يدمى مسيله % وأقطع أنفاسا مسالكها تدمى % % 8(@)(@@) % تذكرت إذ سهم الهوى غير طائش % وإذ أسهم الأيام طائشة المهوى % % 9(@)(@@) % وكم ليلة أحيت نفوس ذوي الهوى % % عناقا وكانت لا تموت ولا تحيا % % 10(@)(@@) % ويوم أرانا العيش يهتز عزة % بما قد حوى من غرة الرشأ الأحوى % % PageV01P001 11(@)(@@) % جلونا به الكاسات والأفق عاطل % إلى أن تبدى الأفق في حلة تجلى % % 12(@)(@@) % فصافح منها الشرب كل مشوقة % عليها رجال الفرس يقدمهم كسرى % % 13(@)(@@) % نحيا ونسقى في الزجاجة باطلا % إذا نحن حققنا التحية والسقيا % % 14(@)(@@) % ويلبسه ساقي المدامة حلة % ولكنه في كف شاربه يعرى % % 15(@)(@@) % وليل رحيب الباع مد رواقه % % على الأفقحتى خيل في حلتي ثكلى % % 16(@)(@@) % يقيد ألحاظ العيون حجابه % % كأن بصير القوم من دونه أعمى % % 17(@)(@@) % ترديته حتى رأيت رداءه % يرق بمنشور من الصبح لم يطو % 18(@)(@@) % ولاح لنا نهج خفي كأنه % إذا اطردت أثناؤهحية تسعى % % 19(@)(@@) % إلى سيد يعطي على الحمد ماله % % فيأخذ ما يبقى ويعطي الذي يفنى % % 20(@)(@@) % وأبيض يحمي كل أبيض ماجد % إذا لاح فردا فهوصاحبه الأدنى % % PageV01P002 21(@)(@@) % ومزمومة الأطراف مصفرة القرى % % مؤلفة الأعضاء من فرق شتى % % 22(@)(@@) % تشرد من أولادها كل زائر % فيا لك أما ما أعق وما أجفى % % 23(@)(@@) % إذا طار عنها انفلفي كل نثلة % دلاص كما ينفل في الشمط المدرى % % 24(@)(@@) % وإن حاد عن نفس هداه لها الردى % % ولم ير سار قبله بالردى يهدى % % 25(@)(@@) % طلعت عليه والذوابل تلتوي % % أسنتها في نحر كل فتى ألوى % % 26(@)(@@) % وأسفرت والألوان تربد خيفة % وبيض الظبا تدمى وسمر القنا تفنى % % 27(@)(@@) % تقيلتعبد اللهفي البأس والندى % % فما حدت يوما عن طريقته المثلى % % 28(@)(@@) % وأنت رفعت الشعر بعد انخفاضه % بجودكحتى 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms2# صار في ذروة الشعرى % % 29(@)(@@) % فكم مدحة غب النوال تبسمت % كما ابتسم النوار غب حيا أروى % % 30(@)(@@) % ثناء أبان الفضل مني لحاسد % تبين فيه ذلة العبد للمولى % % PageV01P003 31(@)(@@) % يجول فجاج الأرض وهومقيد % بقافية يبلى الزمان ولا تبلى % % 32(@)(@@) % وما ضر عقد من ثناء نظمته % % وفصلته أن لا يعيش له الأعشى % % PageV01P004 البحر : - 1(@)(@@) % أمن العيون تروم فقد عنائه % % هيهات ضن سقامها بشفائه % % 2(@)(@@) % ما كان هذا البين أول جمرة % أذكت لهيب الشوق في أحشائه % % 3(@)(@@) % لولا مساعدة الدموع ودفعها % % خوف الفراق أتى على حوبائه % % 4(@)(@@) % مفقودة شية الجواد لنقعه % وحجول أربعة لخوض دمائه % % 5(@)(@@) % أوجحفل لعبت صدور رماحه % % فكأنما انقضت نجوم سمائه % % 6(@)(@@) % لجب توشحت البسيطة سيله % % وتعممت أعلامها بعمائه % % 7(@)(@@) % متبسم قبل النهاركأنما % % زر النهار عليه ثوب ضحائه % % 8(@)(@@) % ويريك بين مدجج ومدرع % خلع الربيع الطلق بين نهائه % % 9(@)(@@) % يثنيه في السير الحثيث بلحظه % كالريح تثني الغيم في غلوائه % % 10(@)(@@) % فكأن أشتات الجبال تجمعت % فتعرضت من دونه وورائه % % PageV01P005 11(@)(@@) % فهناك تلقى الموتفوق قناته % % متبرجا والنصر تحت لوائه % % 12(@)(@@) % أعدوهأوفى عليك مشوقا % بقراعهإذ لست من أكفائه % % 13(@)(@@) % ومشمرا قد شلمن إدلاجه % % ليل التمام ومل من إسرائه % % 14(@)(@@) % ودقيق معنى العرف يجعل بشره % % بدر العدو وتلك من أكفائه % % 15(@)(@@) % وإذا النسيم وشى إليك مصبحا % بمسرة فحذار من إمسائه % % 16(@)(@@) % قد قلتإذ سالت عدى أمامه % % سيل السراب جرى على بطحائه % % 17(@)(@@) % ما باله مغرى بوصل عدوه % % وعدوه مغرى بوصل جفائه % % 18(@)(@@) % يا موجبا حق السماح بنائل % تتقاصر الأنواء عن أنوائه % % 19(@)(@@) % والمبتني بيت العلاء ببأسه % % فغدا علاء النجم دون علائه % % 20(@)(@@) % وإذا بحار المكرمات تدفقت % % فجميعها تمتار من أندائه % % PageV01P006 21(@)(@@) % كم منة لك ألبستني نعمة % تدع الحسود يذوب من برحائه % % 22(@)(@@) % صنت الثناء عن الملوك نزاهة % وجعلته وقفا على آلائه % % 23(@)(@@) % ألفاظه كالدر في أصدافه % لا بل تزيد عليه في لألائه % % 24(@)(@@) % من كل ريقة الكلامكأنما % % جاد الشباب لها بريق مائه % % 25(@)(@@) % فالشعر بحر نلت أنفس دره % % وتنافس الشعراء في حصبائه % % 26(@)(@@) % وأنا الفداء لمن مخيلة برقه % % حظي وحظ سواي من أنوائه % % 27(@)(@@) % قمر إذا ما الوشي حينأذاله % % كيما يصون بهاءه ببهائه % % 28(@)(@@) % خفر الشمائل لوملكت عناقه % % يوم الوداع وهبته لحيائه % % 29(@)(@@) % ضعفت معاقد خصره وعهوده 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms3# % فكأن عقد الخصر عقد وفائه % % 30(@)(@@) % أدنوإلى الرقباء لا من حبهم % % وأصد عنه وليس من بغضائه % % PageV01P007 31(@)(@@) % لله أي محاجر عنت لنا % % بمحجر إذ ريع سرب ظبائه % % 32(@)(@@) % ونواظر وجد المحب فتورها % % لما استقل الحيفي أعضائه % % 33(@)(@@) % و حيا أرقت لبرقهفكأنه % % قدح الزناد يطير في أرجائه % % 34(@)(@@) % سار على كفل الجنوبمقابل % حزن البلاد وسهلها بعطائه % % 35(@)(@@) % حنت رواعدهفأسبل دمعه % كالصب أتبع شدوه ببكائه % % 36(@)(@@) % وسقت غمائمه الرياضكأنما % % جود الأمير سقى رياض ثنائه % % 37(@)(@@) % سفها لمن سماه سيف حفيظة % هلا أعار السيف من أسمائه % % 38(@)(@@) % متجرد للخطب عراض القنا % % والمشرفية من مشيد بنائه % % 39(@)(@@) % ومواجه وجه العدو بصعدة % ينقض كوكبه على شحنائه % % 40(@)(@@) % والروم تعلم أن تاج زعيمها % % ملقى بحد السيف يوم لقائه % % PageV01P008 41(@)(@@) % لما حماه القر سفك دمائهم % % أضحى يعد القر من أعدائه % % 42(@)(@@) % حمد الغمام وذمه ولربما % % ساء الحبي وسر عند حبائه % % 43(@)(@@) % قلق يفنيه الحديدفينثني % % جزلان مثلوج الحشا بفنائه % % 44(@)(@@) % إن الربيع مبيد خضراء العدا % % ومسيل أنفسهم على خضرائه % % 45(@)(@@) % ولو أنهم قدروا على أعمارهم % % وصلوا بها الأحوال عمر شتائه % % 46(@)(@@) % إن عاقه عما يحاول صنوه % % وشبيهه في بشره وعطائه % % 47(@)(@@) % فكأنني بجبينه في مأزق % متمزق عنه دجى ظلمائه % % PageV01P009 البحر : - 1(@)(@@) % وشاحب اللبسة والأعضاء % أشعث نائي العهد بالرخاء % 2(@)(@@) % أفضى به العدم إلى الفضاء % % فوجهه للضح والهواء % 3(@)(@@) % أغبر يحوي الرزق من غبراء % خفيفة ثقيلة الأرجاء % 4(@)(@@) % كأنها هلهلة الرداء % كلفها لحظ بنات الماء % 5(@)(@@) % بأعين لم تؤت من إغضاء % كثيرة تربى على الإحصاء % 6(@)(@@) % وأقبلت تملأ عين الرائي % % بكل صافي المتن والأحشاء % 7(@)(@@) % أبيض مثل الفضة البيضاء % أوكذراع الكاعب الحسناء % 8(@)(@@) % فحازإذ خاطر بالحوباء % سعادة الجد من الشقاء % 9(@)(@@) % حل لنا في حلتي عناء % من صنعة الإذلاج والإسراء % 10(@)(@@) % والصبح حمل في حشا الظلماء % ونحن نذكي شعل الصهباء % PageV01P010 11(@)(@@) % فمر والأوتار في مراء % يحمل مثل زبدة السقاء % 12(@)(@@) % أطلقه من لجة خضراء % في لجة يلعب في ضياء % 13(@)(@@) % كأنه ملقى على الحصباء % ينظر من ياقوتة زرقاء % 14(@)(@@) % في جوشن مفضض الأثناء % قد لها من جونة الضحاء % 15(@)(@@) % أومن حبير مزنة غراء % غداؤنا بورك من غذاء % 16(@)(@@) % نؤثره في الصيف والشتاء % على القديد الغض والشواء % 17(@)(@@) % رزقا رزقناه بلا عناء % نعده من سابغ 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms4# النعماء % PageV01P011 البحر : - 1(@)(@@) % أبالعمر خيم أم بالحشاء % قريب إذا هجع الركبنائي % % 2(@)(@@) % ألم وثوب الدجى مخلق % وثوب الصباح حديد الضياء % 3(@)(@@) % يضيء لنا الخيف إيماضه % % وليس ببرق خفى من خفاء % 4(@)(@@) % وفاء تصرم عن يقظة % وكم يقظة عصفت بالوفاء % 5(@)(@@) % تولت عهودك محمودة % بقرب الوصال وبعد الجفاء % 6(@)(@@) % وأبقت أسى ليس يقضي الأسى % % عليه وداء بعيد الدواء % 7(@)(@@) % وشوقا أكافحه باللوى % % مكافحة القرن تحت اللواء % 8(@)(@@) % وصبرا إذا هب وجد الحشا % % تعلقت منه بمثل الهباء % % 9(@)(@@) % ومن غره الدهر ألفيته % % ذليل الدموععزيز العزاء % 10(@)(@@) % تجلى المشيب لتلك العيون % فبدلهن قذى من جلاء % PageV01P012 11(@)(@@) % ورب زمان سحبنا به % % رداء البطالة سحب الرداء % 12(@)(@@) % ومستسلمات هززنا لها % % مداري القيان لسفك الدماء % 13(@)(@@) % وقد نظم العلج أجسامها % % مع الجدر نظم صفوف اللقاء % 14(@)(@@) % نمد إليها أكف الرجال % فترجع مثل أكف النساء % 15(@)(@@) % و جعد المياهإذا صافحت % % جداوله الريحسبط الهواء % 16(@)(@@) % غدونا وأنواره كالبرود % ورحنا وكثبانه كالملاء % 17(@)(@@) % تقابلنا الوحش في روضة % كما قابلتك نجوم السماء % 18(@)(@@) % فهل من سبيل إلى نشره % % إذا ركضت فيه خيل الرخاء % 19(@)(@@) % وأقماره حين تبدي له % % محاسنها الصبح سلم المساء % 20(@)(@@) % وتجديدهن بجر الذيولوحدوا المدام إذا ماونت رأى الغناء % % وجر الزقاق أديم الفضاءسقط بيت % % PageV01P013 21(@)(@@) % وتشتيتنا شمل سرب الظبا % % بمدمجة مثل سرب الظباء % 22(@)(@@) % إذا ما طلبنفخيل السباق % وإما طلبن فسفن النجاء % 23(@)(@@) % وكم من خليل رأى خلتي % % فصد وكنا خليلي صفاء % 24(@)(@@) % وحمراء تمزج في خدرها % % بماء الصبابةماء البهاء % 25(@)(@@) % تحذرني أجلي في السرى % % وهل كنت آمنه في الثواء % 26(@)(@@) % ومن عجب أن حلف الفسو % % ق حالفه عدم الأنبياء % 27(@)(@@) % سيظفره بالمنى زجره % % إلى ابن المظفرعيس الرجاء % 28(@)(@@) % دعونا مفرق شمل اللهى % % سماحا وجامع شمل الثناء % 29(@)(@@) % بكف ترقرق ماء الحياة % ووجه يرقرق ماء الحياء % 30(@)(@@) % نضا الكبر إلا على حاسد % تجاذبه حلة الكبرياء % PageV01P014 31(@)(@@) % وفاز ولم يغل في جريه % % غداة النضالبسهم الغلاء % 32(@)(@@) % كأن سجاياه من نشرها % % وإشراقها عبق في ذكاء % 33(@)(@@) % له عزمات تفل السيوف % وتسبق بالفوت شأو القضاء % 34(@)(@@) % ومكرمة لوغدت مزنة % لأيقن منها الثرى بالثراء % 35(@)(@@) % نزلت بعقوته منزلا % خصيب الجناب رحيب الفناء % 36(@)(@@) % أهب لنا فيه ريح الندى % % رخاء تخبرنا بالرخاء % 37(@)(@@) % أبي تذل صروف الزمان % لديهفتنقاد بعد الإباء 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms5# % 38(@)(@@) % وخرق تخرق في المكرمات % فغطت يداه حجاب العطاء % 39(@)(@@) % وثبت إذا ما الليالي انبرت % بريح سمائمها الجربياء % 40(@)(@@) % كأن الخطوبإذا حاولته % % تقطر منها بقطري حراء % PageV01P015 41(@)(@@) % بنت مجده الغر من يعرب % فآثر تشييد ذاك البناء % 42(@)(@@) % بقيت فكم لك من شيمة % كسوت بها المجد ثوب البقاء % 43(@)(@@) % ويوم تورد فرسانه % % حياض الحتوف ورود الظماء % 44(@)(@@) % كأن صوارمه في العجاج % بوارق تصدع حجب العماء % 45(@)(@@) % تراءى السوابغ في حومتيه % كما اضردت شمأل في نهاء % 46(@)(@@) % كأن الكماة لإشراقها % % تناهب أعضاء شمس الضحاء % 47(@)(@@) % أضاء لعينيكفي نقعه % % سنا المشرفية نهج السناء % 48(@)(@@) % وكنت إذا ما بلتك العلى % % مليا بتفريق شمل البلاء % 49(@)(@@) % فحلأبا أحمد حلية % مخلدة ما لها من فناء % 50(@)(@@) % تضرم غيظا قلوب العدى % % وتملأ بردا حشا الأولياء % PageV01P016 51(@)(@@) % دعوتك والدهر مستليم % يشوب الشجاعة لي بالدهاء % 52(@)(@@) % فكنت جديرا بفضل الغنى % % وكنت جديرا بفضل الغناء % PageV01P017 البحر : - 1(@)(@@) % أحوال مجدك في العلو سواء % يوم أغر وشيمة غراء % 2(@)(@@) % أصبحت أعلى الناس قمة سودد % والناس بعدك كلهم أكفاء % 3(@)(@@) % أيمينك البحر الخضمإذا طمت % أمواجهأم صدرك الدهناء % 4(@)(@@) % أذكرتنا شيم الليالي في الندى % % والبأسإذ هي شدة ورخاء % 5(@)(@@) % نسب أضاء عموده في رفعة % كالصبح فيه ترفع وضياء % 6(@)(@@) % وشمائل شهد العدو بفضلها % % والفضل ما شهدت به الأعداء % 7(@)(@@) % وإذا عبستفصارم ومنية % وإذا ابتسمتفموعد وعطاء % 8(@)(@@) % وبنوقبيصة معشر أخلاقهم % % سيل فمنه حيا ومنه دماء % 9(@)(@@) % وإذا تتابعت النوائب أحسنوا ؛ % وإذا تشاجرت الرماح أساؤا % % 10(@)(@@) % فضلت ليالي القصف ليلتك التي % % هي في المحاسن غادة حسناء % PageV01P018 11(@)(@@) % رقت غياهبهافهن غلائل % وسخت جنائبهافهن رخاء % 12(@)(@@) % وصفت لك اللذات بين غرائب % للعيشفي أفيائهن صفاء % 13(@)(@@) % برك تحلت بالكواكب أرضها % % فارتد وجه الأرض وهوسماء % 14(@)(@@) % رفعت إلى الجوزاء فواراتها % % عمدا تصاب بصوبها الجوزاء % 15(@)(@@) % كادت ترد على الحيا ألطافه % لولم يمل أطرافهن حياء % 16(@)(@@) % مثل القنا الخطي قوم ميله % وجرت عليه الفضة البيضاء % 17(@)(@@) % حتى إذا انتشرت جلابيب الدجى % % وتكاثفت من دونها الظلماء % 18(@)(@@) % فرجتها بصحائح إن تعتلل % فلهن من ضرب الرقاب شفاء % 19(@)(@@) % شمعا حملت على الرماح رماحه % % فقدودهن وما حملن سواء % 20(@)(@@) % لقي النجوم وقد طلعن بمثلها % % وأعاد جنح الليل وهوضحاء % PageV01P019 21(@)(@@) % يا سيد الوزراء نلت من العلى % % والمجد ما يعيا به الوزراء 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms6# % 22(@)(@@) % هي ليلة لا زلت تلبس مثلها % % في نعمة وصلت بها السراء % 23(@)(@@) % أغنيت قوما حين هز غناؤها % % عطفيكرب غنى حداه غناء % 24(@)(@@) % وقطعتها والليل يصدع قلبه % % ضداننار تستنير وماء % 25(@)(@@) % نعم البرية في بقائكفلتدم % لهم بطول بقاءك النعماء % PageV01P020 البحر : - 1(@)(@@) % لله آية ليلة أحييتها % % حتى الصباحقليلة الإغفاء % 2(@)(@@) % بمدامة شبهت فاضل كأسها % % من لونها في رقة وصفاء % 3(@)(@@) % بسوالف العذراء لاح بياضها % % من فوق جيب غلالة زرقاء % PageV01P021 البحر : - 1(@)(@@) % قد أغتدي نشوان من خمر الكرى % % أسحب بردي على برد الثرى % % 2(@)(@@) % والصبح حمل بين أحشاء الدجى % % والريح كالراح نأى عنها القذى % % 3(@)(@@) % ينم رياها على زهر الربى % % بذات أحداق ترى ما لا يرى % % 4(@)(@@) % ملاءة ما نسجت لترتدى % % تريك ضعفا ظاهرا وهوقوى % % 5(@)(@@) % وجدة تحسبها العين بلى % % غبراء كالدر تغشاها الصدا % % 6(@)(@@) % تعوم في أبيض كالآل صفا % % ترسب في أحشائه صفر الحشا % % 7(@)(@@) % فتعتلي منه بأحشاء ملا % % تضحك عن مثل صغيرات المدى % % 8(@)(@@) % كأنها عقد لآل قد وهى % % أوعن نقي البطن موشي القرى % % 9(@)(@@) % تومض فيها كالحسام المنتضى % % لم يدرلما قصرت عنها الخطى % % 10(@)(@@) % أظله منها رداء أم ردى % % فذلك اللذات لا صيد الطلا % % PageV01P022 11(@)(@@) % يجري على آثاره الطرف الوأى % % حتى يرى عنه كليلا قد ونى % % PageV01P023 البحر : - 1(@)(@@) % اصبر على مترادف الضراء % فلعل ذلك مؤذن بشفاء % 2(@)(@@) % ما حال من لعب السقام بجسمه % ظلما فعض نفيسة الأعضاء % 3(@)(@@) % حظر الطبيب عليه طيب غذائه % % وأباحه مكروه كل غذاء % 4(@)(@@) % ويعوده أعداؤه وأشد من % مرض المريض عيادة الأعداء % PageV01P024 البحر : - 1(@)(@@) % ومعطية صفو ما استودعت % مسامحة عند إعطائها % % 2(@)(@@) % تسر لندمانها هيبة % على أنه عبد آلائها % % 3(@)(@@) % فتمنحه صفو مكنونها % % وتكتمه جل أقذائها % % 4(@)(@@) % وتحدث في الماء برد الشمال % إذا سد فوها على مائها % % 5(@)(@@) % يصوب في طرف أنفاسها % % ويشرب من جرح أحشائها % % 6(@)(@@) % إذا القيظ أخمد نيرانه % % تواصى الندامى بإقصائها % % PageV01P025 البحر : - 1(@)(@@) % ومنزل رق به الهواء % وطاب للشرب به الثواء % 2(@)(@@) % بنية ما حولها بناء % كما أقيم في يد إناء % 3(@)(@@) % تركض فيه فرس دهماء % تكنفها عجاجة بيضاء % 4(@)(@@) % تجري فإن أعوزها الفضاء % ميدانها وجسمها سواء % 5(@)(@@) % يخفرها جار له ضوضاء % كلاهما لمعشر نعماء % 6(@)(@@) % يوم سرور ما به خفاء % وليلة مسفرة غراء % 7(@)(@@) % رخاؤهاإذ ودعت 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms7# رخاء % تبرد من نسيمها الأحشاء % 8(@)(@@) % غرة دهر كله ظلماء % % PageV01P026 البحر : - 1(@)(@@) % خفقت راية الصباح وللنا % % ر لهيب كالراية الصفراء % 2(@)(@@) % لمعت للعيون بعد اسوداد % % فأضاءت حنادس الظلماء % 3(@)(@@) % واستقرت تحت الرمادفخيلت % ذهبا تحت فضة بيضاء % PageV01P027 البحر : - 1(@)(@@) % أحذركم أمواج دجلةإذ غدت % مصندلة بالمد أمواج مائها % % 2(@)(@@) % وظلت صغار السفن ترقص وسطها % % كرقص الريح عند انتشائها % % 3(@)(@@) % فكم من غريق قد رأيت رداءه % تجول مجال الطرف فوق ردائها % % 4(@)(@@) % وما أنس من يوم ذممت صنيعه % % فما أنس يومي واقفا بفنائها % % 5(@)(@@) % وقد عصفت بالجسر ريح فأقبلت % سفائنه تعوج بعد استوائها % % 6(@)(@@) % فمن مهجة ترتاع عند انخفاضها % % وسبابة تهتز عند اعتلائها % % 7(@)(@@) % تفرقها هوج الرياح وتعتلي % % ربا الموج من قدامها وورائها % % 8(@)(@@) % فهن كدهم الخيل جالت صفوفها % % وقد نشرتها روعة من ورائها % % 9(@)(@@) % ودجلة كدراء الأديم سفيهة % تعاف سجايا حملها وصفائها % % 10(@)(@@) % كأن صنوف الطير عاذت بأرضها % % وقد سامها ضيما أسود سمائها % % PageV01P028 11(@)(@@) % أوالسبج المسود حلت عقوده % % على تربة محمرة من فضائها % % PageV01P029 البحر : - 1(@)(@@) % لنا مغن حسن الغناء % وقهوة ضاحكة الإناء % 2(@)(@@) % وغرفة فسيحة الفناء % طائرة القمة في الهواء % 3(@)(@@) % قريبة من كلل العماء % كهودج ممسك الرداء % 4(@)(@@) % يوطن في قبتها العلياء % زور خفيف الروح والأعضاء % 5(@)(@@) % محلق في كبد السماء % وتارة يلصق بالغبراء % 6(@)(@@) % في يلمق مشهر الأثناء % كأنما طوق بالدماء % 7(@)(@@) % يطرب أويخلب قلب الرائي % % بين غناء منه أوبناء % 8(@)(@@) % وتحتها ديباجة الفضاء % قد رصعت باللؤلؤ الأنداء % 9(@)(@@) % مفروجة عن قلق الأحشاء % أبيض ذي حاشية خضراء % 10(@)(@@) % معرج كالأيم في التواء % وقد توافت عصبة الوفاء % PageV01P030 11(@)(@@) % كأنها منطقة الجوزاء % فطاعن منهم حشا جوفاء % 12(@)(@@) % مختضب الكف من الصهباء % ومجلب مشمر القباء % 13(@)(@@) % يرفع دهماء على شقراء % تلعب في حلتها السوداء % 14(@)(@@) % ذؤابة كالراية الحمراء % فلا ترعنا اليوم بالجفاء % 15(@)(@@) % وسر إلينا غير ذي إبطاء % نغرقك في بحر من السراء % PageV01P031 البحر : - 1(@)(@@) % مرحبا بالصبوح في الظلماء % وبعذراء من يدي عذراء % 2(@)(@@) % وبسكرين من لحاظ غزال % ساحر لحظه ومن صهباء % 3(@)(@@) % واحمرار الكؤوس في كف ساق % صيغ من ماء وردة بيضاء % 4(@)(@@) % ضحكت أوجه اللذاذة بالفك % % ر ولاحت طوالع السراء % 5(@)(@@) % فكأن السرور إلف حبانا % % منه بالوصل بعد طول جفاء % 6(@)(@@) % وكأن الهلال نون لجين % عرقت في 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms8# صحيفة زرقاء % PageV01P032 البحر : - 1(@)(@@) % غدوت بها مجنونة في اعتدائها % % تلاقي الوحوش الحين عند لقائها % % 2(@)(@@) % لهن شيات كالذراريح أصبحت % مؤلفة ظلماؤها بضيائها % % 3(@)(@@) % وأيد إذا سلت صوالج فضة % على الوحش يوما أذهبت بدمائها % % PageV01P033 البحر : - 1(@)(@@) % قل للأمير الماجد الس % سامي على أكفائه % 2(@)(@@) % والمرتقي أمم العلا % ء بفخره وسنائه % 3(@)(@@) % والمستبد بعزمه % كالسيف عند مضائه % 4(@)(@@) % إن الكريم إذا بنى % % لم ينو هدم بنائه % 5(@)(@@) % وإذا أفاد صنيعة % بقيت بطول بقائه % 6(@)(@@) % وإذا جتنى ثمر المدي % % ح سقاه من أنوائه % 7(@)(@@) % أنا غرسه والغرس يذ % وي إن خلا من مائه % 8(@)(@@) % يا خير مأمول يعو % % ذ مؤمل بفنائه % 9(@)(@@) % هذا وليك قد كسا % % ه الدهر ثوب عفائه % 10(@)(@@) % فاصرف صروف زمانه % والبس جديد ثنائه % PageV01P034 البحر : - 1(@)(@@) % وأعين تأنف من إغضائها % % صافية الأجفان من أقذائها % % 2(@)(@@) % تردي بنات الغدر في أثنائها % % يحملها طب بحسم دائها % % 3(@)(@@) % مجدد ما رث من أعضائها % % تجذبها والرزق في أحشائها % % 4(@)(@@) % بيضاؤه تلمع في غبرائها % % كأنما كسر في أثنائها % % 5(@)(@@) % صوارما تعشيك من لألائها % % PageV01P035 البحر : - 1(@)(@@) % عفت عني الخطوب به ولولا % % أياديه لصرت إلى العفاء % 2(@)(@@) % أرى الأيام تقصدني بكيد % يقصر عنده كيد النساء % 3(@)(@@) % وما لي بالعدو يد إذا ما % % رماني بالشجاعة والدهاء % 4(@)(@@) % كفيت من الحوادث كل خطب % شديد البطش مكروه اللقاء % 5(@)(@@) % فما كشف القناع له قنوعي % % ولا مل الحياة به حيائي % % PageV01P036 البحر : - 1(@)(@@) % حبيب حباك بلينوفر % فأكرم به وبإهدائه % % 2(@)(@@) % تأملت ما فيه فاقتادني % % إليه تزاويق وشيائه % % 3(@)(@@) % له طلعة بين أوراقه % % ضحى ثم يكمن في مائه % % 4(@)(@@) % كغواص لج على فاقة % يحاول أسباب إثرائه % % PageV01P037 البحر : - 1(@)(@@) % كأنما الجسر فويق الماء % وسفنه جانحة الأفياء % 2(@)(@@) % شبه الطراز لاح في الرداء % كأنه في خلع الظلماء % 3(@)(@@) % دهم من الخيل على رواء % % PageV01P038 البحر : - 1(@)(@@) % و قالأتاك الحلي قلت ممازحا % أتاك النوى يا بائع الملح بالنوى % % 2(@)(@@) % و ناولني مسودة لو قرنتها % % إلى القار كانا في سوادهما سوا % % PageV01P039 البحر : - 1(@)(@@) % أجانبها حذارا لا اجتنابا % % وأعتب كي تنازعني العتابا % % 2(@)(@@) % وأبعد خيفة الواشين عنها % % لكي أزداد في الحب اقترابا % % 3(@)(@@) % وتأبى عبرتي إلا انسكابا % % وتأبى لوعتي إلا التهابا % % 4(@)(@@) % مررنا بالعقيق فكم عقيق % ترقرق في محاجرنافذابا % % 5(@)(@@) % ومن مغنى جعلنا الشوق فيه % % سؤالا 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms9# والدموع له جوابا % % 6(@)(@@) % وفي الكلل التي غابت شموس % إذا شهدت ظلام الليل غابا % % 7(@)(@@) % حملت لهن أعباء التصابي % % ولم أحمل من السلوان عابا % % 8(@)(@@) % ولوبعدت قبابك قاب قوس % من الواشين حيينا القبابا % % 9(@)(@@) % نصد عن العذيب وقد رأينا % % على ظمإ ثناياك العذابا % % 10(@)(@@) % تثني البرق يذكرني الثنايا % % على أثناء دجلة والشعابا % % PageV01P040 11(@)(@@) % فأياما عهدت بها التصابي % % وأوطانا صحبت بها الشبابا % % 12(@)(@@) % ولست أرى الإقامة في مقام % يضم غرائب الحمد اغترابا % % 13(@)(@@) % وقد شغل الندى الألباب فيه % % فباتت تنظم الكلم اللبابا % % 14(@)(@@) % رياض كلما سقيت سحابا % بسيف الدولة انتظرت سحابا % % 15(@)(@@) % رحيب الصدر ينزل آمليه % من الأملاك أوسعها رحابا % % 16(@)(@@) % ومنشى عارض يذكي التهابا % على الآفاقأويهمي انسكابا % % 17(@)(@@) % يلاقي الراغبين ندى يديه % % برغبته وإن كانوا رغابا % % 18(@)(@@) % إذا انتهبت صوارمه بلادا % أعادته مكارمه نهابا % % 19(@)(@@) % ربيب الحرب إن جر العوالي % % إلى الهيجاء راع بها ورابا % % 20(@)(@@) % توددها حديث السن حتى % % أشاب شواتها طعنا وشابا % % PageV01P041 21(@)(@@) % يعد حياض غمرتها عذابا % إذا ما عدها قوم عذابا % % 22(@)(@@) % أأبناء الصليب تواعدتكم % % قواضب تنثر الهام اقتضابا % % 23(@)(@@) % إذا طارت مرفرفة عليه % % عقاب الجيشفانتظروا العقابا % % 24(@)(@@) % وإن حسر الضريب ملاءتيه % % عن الدربينفارتقبوا الضرابا % % 25(@)(@@) % فقد عاق الشتاء الحين عنكم % % وعنه الحرب فيه والحرابا % % 26(@)(@@) % سيرضي الله ذوسخط عليكم % % يقود إليكم الأسد الغضابا % % 27(@)(@@) % تقلب في بلاد الروم حتى % % أمال عروشهم فيها انقلابا % % 28(@)(@@) % كأن الجو لما انقض فيها % % أطال عليهم منه شهابا % % 29(@)(@@) % فلم يثن القنا الخطى حتى % % أقاد بكل ما كعب كعابا % % 30(@)(@@) % ويوم البرقموش كأن برقا % تألق بالحتوف له فصابا % % PageV01P042 31(@)(@@) % سموت له وبحر الموت سام % فلما عب فرجت العبابا % % 32(@)(@@) % بذب عن حريم الله أربى % % فلم تترك لذي شطب ذبابا % % 33(@)(@@) % سلمت لبيضة الإسلام ترمي % % مراميها انصلاتا وانتدابا % % 34(@)(@@) % وعاد عليك عيدك ما توارى % % جبين الشمس أوخرق الحجابا % % 35(@)(@@) % وخذها كالتهاب الحلي تغني % % عن المصباح في الليل التهابا % % 36(@)(@@) % مشعشعة كأن الطبع أجرى % % على صفحاتها الذهب المذابا % % 37(@)(@@) % يكر لها العيي الفكر حولا % ويكبودون غايتهاانكبابا % % 38(@)(@@) % كذاك العير إن ما احتث يوما % ليدخل في غبار الطرف خابا % % PageV01P043 البحر : - 1(@)(@@) % أكان لقلبه عنك انقلاب % أمال به إلى الغي العتاب % 2(@)(@@) % أشأن دموعه إلا انسكاب % أذاب ضلوعه إلا التهاب 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms10# % 3(@)(@@) % يجاب الشوق فيكإذا دعاه % % ويمتهن العذولفلا يجاب % 4(@)(@@) % ورفعت القباب ضحىفقلنا % % أزهر ما تضمنت القباب % 5(@)(@@) % ظعائن أشرقت بالدمع عيني % % وقد شرقت بها تلك الشعاب % 6(@)(@@) % محاسنها لأعيننا نهاب % وأنفسنا لأعينها نهاب % 7(@)(@@) % نشيم لها بوارق جاوزتنا % % كما يجتاز شائمه السحاب % 8(@)(@@) % أآنسة الدمى لولا التثني % % ونافرة المهى لولا السخاب % 9(@)(@@) % صفا لك ودنا من كل شوب % وأحلى الود ود لا يشاب % 10(@)(@@) % ومن عجب ثناي على رضاب % تضن به ثناياك العذاب % PageV01P044 11(@)(@@) % أجد وقوفنا بالدار شوقا % إليك وجدة الشوق اكتئاب % 12(@)(@@) % وحنت في رباك العيسحتى % % كأن طلولهن لها سقاب % 13(@)(@@) % سأبرزها سوافر لا يواري % % محاسنهاإذا برزتنقاب % 14(@)(@@) % مكررة على راووق فكر % مروقةكما راق الشراب % 15(@)(@@) % محببةلها في كل قلب % وإن بعدت مناسبهااقتراب % 16(@)(@@) % هي الكلم اللباب صفا وحسنا % وسيف الدولة الملك اللباب % 17(@)(@@) % لأدنى من غرائبها إليه % % وكان لهن في الأرض اغتراب % 18(@)(@@) % فها هي لا تزحزح عن ذراه % % ولا ترجوسواه ولا تهاب % 19(@)(@@) % هوالليث الذي إن يحم أرضا % فكل فجاج تلك الأرض غاب % 20(@)(@@) % مهندهإذا ما زار ظفر % وعامله إذا ما صاب ناب % PageV01P045 21(@)(@@) % وأين الليث من طلق المحيا % % يجد ثوابه ويني العقاب % 22(@)(@@) % وسهل حين يسأل غير صعب % وقد زلت له العرب الصعاب % 23(@)(@@) % له في كل أنملة سحاب % يسح وكل جارحة شهاب % 24(@)(@@) % وحظ عداته ومؤمليه % % حرائبه النفائس والحراب % 25(@)(@@) % وقد خضعت له كعب وخافت % % سطاه حين خوفها كلاب % 26(@)(@@) % وريعت مصر إذ وثب العفرنا % % بحد السيف وانساب الحباب % 27(@)(@@) % وآفاق البلاد له جميعا % تراخى العزم أوجد الطلاب % 28(@)(@@) % خلال يحرس العلياء منها % % سماح أو طعان أو ضراب % 29(@)(@@) % إذا دعت الملوك إليه يوما % فإذعان الملوك له جواب % 30(@)(@@) % مقامك حيث تتصل المعالي % % وذكرك حيث ينقطع التراب % PageV01P046 31(@)(@@) % فداؤك يا ابن عبد الله قوم % يمينك لجة وهم سراب % 32(@)(@@) % إذا عدت جبالك من عدي % تطأطأت الربا لك والهضاب % 33(@)(@@) % ملوك ذللت بهم رقاب % كما عزت بعزهم رقاب % 34(@)(@@) % عذاب القول إن قالوا أصابوا ؛ % غزار الجودإن جادوا أطابوا % % 35(@)(@@) % إذا نزلوا فأقمار بليل ؛ % وإن ركبوافآساد غضاب % 36(@)(@@) % هوالحسب الذي لا ريب فيه ؛ % وهل في الصبحما وضحارتياب % 37(@)(@@) % لئن سار الركاب بحر مدحي % % فقد سارت بجدواك الركاب % 38(@)(@@) % ولي في ساحتيك غدير نعمى 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms11# % % صفا متناه واطرد الحباب % 39(@)(@@) % وظل لا يمازجه هجير % وشمس لا يكدرها ضباب % 40(@)(@@) % وأيام حسن لديحتى % % تساوى الشيب فيها والشباب % PageV01P047 41(@)(@@) % فإن تلحق ثوابك بي ثيابا % فأيسر ما تجود به الثياب % 42(@)(@@) % إذا احتفل النديفأنت أري ؛ % وإن حمي الحديدفأنت صاب % 43(@)(@@) % وإن خفي الصواب على ملوك % فإن جميع ما تأتي الصواب % PageV01P048 البحر : - 1(@)(@@) % فتح أعز به الإسلام صاحبه % % ورد ثاقب نور الملك ثاقبه % % 2(@)(@@) % سارت به البرد منشورا صحائفه % % على المنابرمحمودا عواقبه % % 3(@)(@@) % فكل ثغر له ثغر يضاحكه % وكل أرض بها ركب يصاحبه % % 4(@)(@@) % عاد الأمير به خضرا مكارمه % % حمرا صوارمهبيضا مناقبه % % 5(@)(@@) % مؤيدا يتحامى الدهر صولته % % فليس يلقاهإلا وهوهائبه % % 6(@)(@@) % يوم من النصر مذكور فواضله % % إلى التناد ومشكور مواهبه % % 7(@)(@@) % إن لم يكن يومه بدر فمن ظفر % أعطيت فيه ومن نصر مناقبه % % 8(@)(@@) % سل الدمستق هل عن الرقاد له % % وهل يعن له والرعب صاحبه % % 9(@)(@@) % لما رأى منك مغلوبا مغالبه % % يوم اللقاء ومحروبا محاربه % % 10(@)(@@) % ونازحا صهوات الخيل مجلسه % % والبيض دون ذوي القربى أقاربه % % PageV01P049 11(@)(@@) % حصونه الشمإن أفضى عوامله % % وسوره دون ما تحمي قواضبه % % 12(@)(@@) % رأى الصوارم أجدى من مكاتبة % لم يفتتحهابإذعان مكاتبه % % 13(@)(@@) % فقارب الحرب حتى ما تباعده % % وباعد السلم حتى ما يقاربه % % 14(@)(@@) % أمواله لوفود الشكرإن كثرت % وبالسيوف إذا قلت مكاسبه % % 15(@)(@@) % ولن ير البعد قربا وهو طالبه % % ويحسب الحزن سهلا وهو راكبه % % 16(@)(@@) % ولوأقام فواقا إذ دلفت له % % تحت العجاج لقد قامت نوادبه % % 17(@)(@@) % لما تراءى لك الجمع الذي نزحت % أقطاره ونأت بعدا جوانبه % % 18(@)(@@) % تركتهم بين مصبوغ ترائبه % % من الدماء ومخضوب ذوائبه % % 19(@)(@@) % فحائر وشهاب الرمح لاحقه % % وهارب وذباب السيف طالبه % % 20(@)(@@) % يهوي إليه بمثل النجم طاعنه % % وينتحيه بمثل البرق ضاربه % % PageV01P050 21(@)(@@) % يكسوه من دمه ثوبا ويسلبه % % ثيابه فهو كاسيه وسالبه % % 22(@)(@@) % حميت يا صارم الإسلام حوزته % % بصارم الحد حتى عز جانبه % % 23(@)(@@) % رفعت بالحرث الحصن الذي خفضت % % منه الحوادث حتى زال راتبه % % 24(@)(@@) % أعدته عدويا في مناسبه % % من بعد ما كان روميا مناسبه % % 25(@)(@@) % فقد وقى عرضه بالبيد واعترضت % طولا على منكب الشعرى مناكبه % % 26(@)(@@) % مصغ إلى الجو أعلاه فإن خفقت % زهر الكواكب خلناها تخاطبه % % 27(@)(@@) % كأن أبراجه من كل ناحية % أبراجها والدجى وحف غياهبه 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms12# % % 28(@)(@@) % يا ناصر الدين لما عز ناصره % % و خاطب المجد لما قل خاطبه % % 29(@)(@@) % حتام سيفك لا تروى مضاربه % % من الدماء ولا تقضى مآربه % % 30(@)(@@) % أنت الغمام الذي تخشى صواعقه % % إذا تنمر أو ترجى مواهبه % % PageV01P051 31(@)(@@) % لم تحمد الروم إذ رامتك وثبتها % % والليث لا يحمد العقبى مواثبه % % 32(@)(@@) % رأتك كالدهر لا تكبوحوادثه % % إذا جرين ولا تنبونوائبه % % 33(@)(@@) % وجربتيا ابن عبد اللهمنك فتى % قد أمنته الذي تخشى تجاربه % % 34(@)(@@) % أصاخ مستمعا للثغر تنجده % % رماحه حين يدعو أورغائبه % % 35(@)(@@) % له من البيض خل لا يباعده % % ومن قنا الخط خدن لا يجانبه % % 36(@)(@@) % قد قلت إذ فيك عز النصر وانتشرت % صحائف الفتح واختالت ركائبه % % 37(@)(@@) % اليوم صان رداء الملك لابسه % % وشلت الحرب يمنى من يحاربه % % 38(@)(@@) % وأصبح الدين قد ذلت لصولته % % كتائب الشركإذ عزت كتائبه % % 39(@)(@@) % مالت رقاب ثغور الشاممصغية % إلى السرور الذي كانت تراقبه % % 40(@)(@@) % رأت حسامك مشهورا فلونطقت % % قالت هوالعز لا فلت مضاربه % % PageV01P052 البحر : - 1(@)(@@) % أخلت أن جنابا منك يجتنب % وأن قلب محب عنك ينقلب % 2(@)(@@) % هيهاتضرم نار الشوق فالتهبت % % ضرام نار على خديك يلتهب % 3(@)(@@) % إذا طلبت ربى نجد مخيمة % فما لها في طلاب غيرها أرب % 4(@)(@@) % لم يشهد البين تبدي ما يغيبه % % إلا وإشهادنا من خيره غيب % 5(@)(@@) % تنقبت بالكسوف الشمسإذ طلعت % % شمس تزيد ضياء حين تنتقب % 6(@)(@@) % مطلوبة الود لم يقعد بها هرب % من الفراق ولم يلحق بها طلب % 7(@)(@@) % قريبة ودوام الهجر يبعدها % % والنجم أقرب منها حين تقترب % 8(@)(@@) % أشكو إلى الظلم ما بي من ظلامتها % % لوكان ينصف ذاك الظلم والشنب % 9(@)(@@) % وقد تناوبني منها الخيالفما % % أصاب إلا خيالا قلبه يجب % 10(@)(@@) % أنى اطمأن وحصباء العجاج عدى % من دونه وثراها السمر والقضب % PageV01P053 11(@)(@@) % حتى تصدت له بالشام من كثب % والشام لا صدر منها ولا كثب % 12(@)(@@) % يكفيك أن لعبت بي نية قذف % كأن جد المنايا عندها لعب % 13(@)(@@) % وراعني ووراء الليل طارده % % وري من الشيب في آثارها لهب % 14(@)(@@) % لما تبسم في الفودين مغتربا % حييته وكلانا اليوم مغترب % 15(@)(@@) % قوض خيامك عن دار ظلمت بها % % وجانب الذل إن الذل يجتنب % 16(@)(@@) % وارحلإذا كانت الأوطان مضيعة % فالمندل الرطب في أوطانه حطب % 17(@)(@@) % أما ترى الدهر أعفى من نوائبه 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms13# % % جار الأمير فما تنتابه النوب % 18(@)(@@) % أجارنا منه من إقباله رغب % يحيي العفاة ومن إعراضه رهب % 19(@)(@@) % غيث تحلب في الآفاق ريقه % % على العفاة ومنشى مزنه حلب % 20(@)(@@) % مرفوعة حجبه للزائرين وهل % % للصبح مزق جلباب الدجى حجب % PageV01P054 21(@)(@@) % ومسرع وهوثاو في مكارمه % % كأن إصعاده من سرعة صبب % 22(@)(@@) % غامت يداهفلم تكذب غيومهما % % والغيث ربما أزرى به الكذب % 23(@)(@@) % فللشمال سحاب صوبها غدق ؛ % ولليمين نهاب صوبها ذهب % 24(@)(@@) % لما توجه تلقاء الثغور صفت % % كدر المياه بها واعشوشب الترب % 25(@)(@@) % وعرد الروم لما رامهم هربا % وهل من الحين وافى جيشه هرب % 26(@)(@@) % لم تجلب الخيل تردى نحوهم قدما % إلا انثنت وذوو تيجانها جلب % 27(@)(@@) % قل للعداة خذوا للحرب أهبتها % % فعن قليل تفرى منكم الأهب % 28(@)(@@) % فتبعثوا وتكونوا في اللقاء يدا % إن الحمام إلى أرواحكم سغب % 29(@)(@@) % أو فاغنموا السلم قبل الحين واستلموا % % ركنا تحن إليه العجم والعرب % 30(@)(@@) % لحرب آخذة منكم وتاركة % وإنما حرب سيف الدولة الحرب % PageV01P055 31(@)(@@) % إن الهمام الذي أضحى يغالبكم % % له على الدهر فيما سامه الغلب % 32(@)(@@) % فاستوهبوا العيش من إيثار طاعته % % فإنما العيش ما يعطي وما يهب % 33(@)(@@) % لن تكسبوا العز من عصيان محتسب % في الجود ما بغرار السيف يكتسب % 34(@)(@@) % ألوى فشن على الأعداء غارته % % من حيث يؤمن أومن حيث يرتقب % 35(@)(@@) % ظلاله حيث حل القضب مصلتة % وخيله حيث سار الجحفل اللجب % 36(@)(@@) % أوفى على بطن هنزيط فأمطره % % ودقا خلال بروق البيض ينسكب % 37(@)(@@) % غيث هوالمحل ما احمرت سحائبه % % إلا تراجع مصفرا به العشب % 38(@)(@@) % فكلما انتشرت أبراد صيبه % % على البلاد انطوت أبراده القشب % 39(@)(@@) % وشارف البحر في بحر إذا اضطربت % حشاه خلت الجبال الشم تضطرب % 40(@)(@@) % مكوكب النقع لورامت كواكبه % % كواكب الجو ثابت وهي تنتهب % PageV01P056 41(@)(@@) % إذا سرت حنت الجرد العتاق به % % وغردت في أعالي سمره العذب % 42(@)(@@) % كأن شمس الضحى تخشاه بارزة % فضوءها بحجاب النقع محتجب % 43(@)(@@) % ولى الشميشق لا يهفوبه طرب % إلى المحل ولا يدنوبه سبب % 44(@)(@@) % لم تسر خيلك في أحشاء داجية % إلا سرى في دجى أحشائه الرعب % 45(@)(@@) % أجلى المواطن كرها أن توردها % % ورد مواطنه غاب القنا الأشب % 46(@)(@@) % حتى نصبت على رغم الصليب بها % % منابر الدين مسموعا بها الخطب % 47(@)(@@) % ثم 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms14# انثنيت وآساد الشرى جزر % بالمرهفات وغزلان النقا سلب % 48(@)(@@) % سبي تحصن منه الجيش وارتبطت % % قب الجياد فلا ماش ولا عذب % 49(@)(@@) % تخير المجد أعلى نسبة فغدا % % إلى علي بن عبد الله ينتسب % 50(@)(@@) % ثلاثة منه تجلوكل داجية % جبينه وغرار السيف والحسب % PageV01P057 البحر : - 1(@)(@@) % ما كف شاديه اعتراض عتابه % % بل زاده طربا إلى أطرابه % % 2(@)(@@) % وأرى الصبابة إربة لولم يشب % يوما حلاوتها الفراق بصابه % % 3(@)(@@) % هوموقف برزت بدور خيامه % للبين واعترضت شموس قبابه % % 4(@)(@@) % راحوا بمثل الريملولا ما أرى % % من وشيه وشنوفه وخضابه % % 5(@)(@@) % متردد في الجفن ماء شؤونه ؛ % متحدر في الخد ماء شبابه % % 6(@)(@@) % يهتز غصن البان تحت ثيابه % ويضيء بدر الليل تحت نقابه % % 7(@)(@@) % فالحسن ما يخفيه من تفاحه % % خفرا وما يبديه من عنابه % % 8(@)(@@) % أيعودأيتها الخيامزماننا % % أم لا سبيل إليه بعد ذهابه % % 9(@)(@@) % أيام أدفع عتبه بعتابه % % عني وأمزج كأسه برضابه % % 10(@)(@@) % فسقاك ساقي المزن أعذب صوبه % % وحباك مذهب غيمه بذهابه % % PageV01P058 11(@)(@@) % نزع الوشاة لنا بسهم قطيعة % ترمى بسهم قطيعة ترمي به % % 12(@)(@@) % ليت الزمان أصاب حب قلوبهم % % بقنا ابن عبد اللهأوبحرابه % % 13(@)(@@) % بسلاح معتل السلاح وإنما % % يعتل بين طعانه وضرابه % % 14(@)(@@) % ألوى إذا استلب المغاور بزه % % كانت نفوس الصيد من أسلابه % % 15(@)(@@) % ظلم التليد وليس من أعدائه ؛ % وحبا الحسود وليس من أحبابه % % 16(@)(@@) % فالغيث يخجل أن يلم بأرضه ؛ % والليث يفرق أن يطيف ببابه % % 17(@)(@@) % يغشى القراع وينثني وسماته % % في غرب منصله وفي جلبابه % % 18(@)(@@) % كالليث آثار اللقاء مبين % في لبدتيه وفي شبا أنيابه % % 19(@)(@@) % علمت ملوك الروم أن حياتها % % ومماتها في عفوه وعقابه % % 20(@)(@@) % في كل عام غزوة يقضي بها % % أرب القنا وينال من آرابه % % PageV01P059 21(@)(@@) % أوفى فسد شعابهم بعرمرم % يغشى الفضاء الرحب سيل عبابه % % 22(@)(@@) % كالطود لا تثنيه عن متمنع % حتى يدق رقابه برقابه % % 23(@)(@@) % تزجي المنون جياده مخزومة % بالحزمأوتحدد الردى بركابه % % 24(@)(@@) % حتى تفسح في مجالس قيصر % متحكما في تاجه ونهابه % % 25(@)(@@) % الله جرد من علي سيفه % % فحمى وذب عن الهدى بذبابه % % 26(@)(@@) % قوليإذا ضاقت علي مذاهبي % % من لي برحب العيش بين رحابه % % 27(@)(@@) % فارقت مشربه الذي لا تنطفي % % غلل الحشا إلا ببرد شرابه % % 28(@)(@@) % ودخلت أبواب الندامة بعدما % % عصفت بي الأحداث عن أبوابه % % 29(@)(@@) % هي زلة 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms15# الرأي التي نكص الغنى % % من سوء عقباه على أعقابه % % 30(@)(@@) % فوحق نعمته علي وطوله % % قسما يقول السامعونكفى به % % PageV01P060 31(@)(@@) % ما سولت لي النفس هجر جنابه % % عند الرحيل ولا اجتناب جنابه % % 32(@)(@@) % أنى وقد نلت السماء بقربه % % وبلغت قاصية المنى بثوابه % % 33(@)(@@) % وحويت فضل المال من إفضاله % % ومحاسن الآداب من آدابه % % 34(@)(@@) % لكنه رأي حرمت رشاده % وبعدت عن تسديده وصوابه % % 35(@)(@@) % لا أحمد الأيام بعد بتاتها % % سببا وصلت إليه من أسبابه % % 36(@)(@@) % أأقوم بين يدي سواه مؤملا % وأنيخ راحلة الرجاء ببابه % % 37(@)(@@) % هيهاتلست بشائم برق امرىء % حتى يكون سحابة كسحابه % % 38(@)(@@) % سأهز بالكلم المهذب عطفه % % طربا وأخلب لبه بخلابه % % 39(@)(@@) % بدع لوان الصب يستشفي بها % % ألم الفراق شفته من أوصابه % % 40(@)(@@) % وأحشها والليل قد ستر الربا % % بدجاهأوحجب الصوى بحجابه % % PageV01P061 41(@)(@@) % حتى يعود الشوق لابس حلة % من أرجوان الفجرأوزريابه % % 42(@)(@@) % فعسى الزمان يبل حر جوانحي % % بصفاء مورده وبرد جنابه % % 43(@)(@@) % فأفوز بالعذب النمير وينطوي % % كشح الحسود على أليم عذابه % % PageV01P062 البحر : - 1(@)(@@) % شعف الحبائل من ربى وملاعب % لم تخل من شغف ودمع ساكب % 2(@)(@@) % أوحشن إلا من وقوف متيم % وعطلن إلا من حلي سحائب % 3(@)(@@) % ولقد صحبت العيش مرضي الهوى % % في ظلها الأوفى خليع الصاحب % 4(@)(@@) % أيام لا حكم الفراق بجائر % فيها ولا سهم الزمان بصائب % 5(@)(@@) % ولربما حالت شوازب أسدها % % بين المحب وبين سرب ربائب % 6(@)(@@) % وتتبعته ظباؤها بقواضب % من لحظها وحماتها بقواضب % % 7(@)(@@) % إذ حيها حي السرور وظلها % % رحب الجناب بهمعزيز الجانب % 8(@)(@@) % خفقان ألوية وغر صواهل % وبدور أندية وجرس كتائب % 9(@)(@@) % وغرائب في الحسن إلا أنها % % ترمي القلوب من الجوى بغرائب % 10(@)(@@) % أنهبننا ورد الخدود وإنما % % أنهبن ذاك الورد لب الناهب % PageV01P063 11(@)(@@) % إن كنت عاتبة عليفما الرضا % % عندي ولا العتبى لأول عاتب % 12(@)(@@) % نبئت أن الأغبياء توثبوا % % سفها علي مع الزمان الواثب % 13(@)(@@) % دبت عقاربهم إلي ولم تكن % لتدب في ليل النفاق عقاربي % % 14(@)(@@) % من منكر فضلي عليه ومدع % شعري ولم أسمع بأخرس خاطب % % 15(@)(@@) % هيهاتما جهل الجهول بمسبل % حجبا على نجم العلوم الثاقب % 16(@)(@@) % وإذا العدوأثار حقدا لم يزل % يكتن في رسبي حشا وترائب % 17(@)(@@) % فليستعد لطعنة من طاعن % شاكي السلاح وضربة من ضارب % 18(@)(@@) % ذنبي إلى الأعداء فضل مواقفي % % والفضل 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms16# ذنب لست منه بتائب % 19(@)(@@) % الله آثرني بوهب دونهم % % وأخصني من وده بمواهب % 20(@)(@@) % ملك إصاخته لأول صارخ % وسجال أنعمه لأول طالب % PageV01P064 21(@)(@@) % جزلان يرغب في العلا فتلاده % % مصغ لدعوة راغب أوراهب % 22(@)(@@) % كالغيث يلقى الطالبين بوابل % سح ويلقى الحاسدين بحاصب % 23(@)(@@) % فصلت عقد مدائحي بخلاله % % فكأنما فصلته بكواكب % 24(@)(@@) % وإذا انتضت يمناه نضوسيوفه % % أزكى ضرام الحرب غير محارب % 25(@)(@@) % أكرم بسيفك من صموت راجل % في النائبات ومن فصيح راكب % 26(@)(@@) % تهتز أعضاء الشجاع مخافة % ما اهتز بين أشاجع ورواجب % 27(@)(@@) % ما إن رأيت سواه عضبا غمده % % أحشاء حالية المقلد كاعب % 28(@)(@@) % لم تعر من صبغ الذوائب إذ غدت % مطمومة ليست بذات ذوائب % 29(@)(@@) % وكأنما طلعت مشارق حلها % % من حلية الجثان فوق مغارب % 30(@)(@@) % ما حارب الصبح المضيء غياهبا % إلا أرتنا الصبح سلم غياهب % PageV01P065 31(@)(@@) % قد قلت إذ عاينت فضل بيانه % % وبيانه كملت أداة الكاتب % 32(@)(@@) % لله درك يا ابن هارون الذي % % أدنى العفاة من السماح العازب % 33(@)(@@) % أغربت في شيم تلوح سماتها % % في كاهل للمجد أوفي غارب % 34(@)(@@) % وشمائل سارت بهن مدائحي % % في الأرضسير شمائل وجنائب % 35(@)(@@) % نضرن وجه المكرمات وطالما % % سفرت لنا عن حر وجه شاحب % 36(@)(@@) % ما لي أرى أوصاب جسمك غادرت % قلب المكارم في عذاب واصب % 37(@)(@@) % عدنا الغمام الجود منك ولم نعد % من قبلهاصوب الغمام الصائب % 38(@)(@@) % لسنا نذم أوائل النوب التي % % جاءت أواخرها بحمد عواقب % 39(@)(@@) % فاسعد بعافية الإله فإنها % % هبة مقابلة بشكر واجب % 40(@)(@@) % وتمل سائرة عليك مقيمة % ملكت وداد أباعد وأقارب % PageV01P066 41(@)(@@) % شرقت بماء الطبع حتى خلتها % % شرقت لريقها ببرد ذائب % 42(@)(@@) % يشتاق طلعتها الكريمإذا نأت % شوق المحب إلى لقاء حبائب % 43(@)(@@) % ويقول سامعهاإذا ما أنشدت % أعقود حمد أم عقود كواكب % PageV01P067 البحر : - 1(@)(@@) % تهيبه ورد الردى لوتهيبا % % ربائب في الأظعان يحسبن ربربا % % 2(@)(@@) % ملكن بتقليب النواظر قلبه % % فقد أمنت في الحب أن يتقلبا % % 3(@)(@@) % طوالع من حمر القباب شموسها % % وما طلعت منهن إلا لتغربا % % 4(@)(@@) % سفرن فلاح الأقحوان مفضضا % على القرب منا والشقائق مذهبا % % 5(@)(@@) % وجدن بألحاظ مراض كأنها % % تصرح بالعتبى إلى من تعتبا % % 6(@)(@@) % وقد أثمر العناب والورد بانها % % فأبدع في تلك الثمار وأغربا % % 7(@)(@@) % محاسن عنت في مساو من النوى % % فلله ورد 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms17# ما أمر وأعذبا % % 8(@)(@@) % رأت جانب الأعداء سهلا فأسهلت % % فلائق كانت بغضة وتحببا % % 9(@)(@@) % عذيري من قلب إذا سمته الهوى % % أجاب وإن ذكرته صبوة صبا % % 10(@)(@@) % وطيف حبيب خاف طيف رقيبه % % فزار وسار خائفا مترقبا % % PageV01P068 11(@)(@@) % إذا كان سقيا الخائفين تجنبا % فلا زال صوب المزن يسقيك صيبا % % 12(@)(@@) % حيا كلما حيت به الريح منزلا % ثنت فيه هدابا إليك وهيدبا % % 13(@)(@@) % تلهب فيه البرق حتى كأنما % % حريق على أثباج ليل تلهبا % % 14(@)(@@) % فبات كأن الريح في جنباته % % تهز صفيحا منه بالتبر مذهبا % % 15(@)(@@) % وساجل معروف الوزير ومن له % % بعرف يعم الأرض شرقا ومغربا % % 16(@)(@@) % همام يعد السمهرية معقلا % يعوذ به والمشرفية مكسبا % % 17(@)(@@) % حليم إذا أحفظته زاد حلمه % % فكيف يرى عن مذهب الحق مذهبا % % 18(@)(@@) % ومبتسم والطعن يخضب رمحه % % كأن قد رأى منه بنانا مخضبا % % 19(@)(@@) % رأيناه يوم الجود أزهر واضحا % ويوم قراع البيض أبيض مقضبا % % 20(@)(@@) % وخلناه في بذل الألوف قبيصة ؛ % وخلناه في سل السيوف المهلبا % % PageV01P069 21(@)(@@) % ملوك إذا الأيام دامت رماحهم % % حسبتهم الأيام صدرا ومنكبا % % 22(@)(@@) % ينازعهم فضل النجابة معشر % ولولاهم لم يعرف الناس منجبا % % 23(@)(@@) % وهجر ترد الخيل رأد ضحائه % % بأرهاجها قطعا من الليل غيهبا % % 24(@)(@@) % كأن سيوف الهندبين رماحه % % جداول في غاب علا وتأشبا % % 25(@)(@@) % تضايق حتى لوجرى الماء فوقه % % حماه ازدحام البيض أن يتسربا % % 26(@)(@@) % وقفت به تحيي المغيرة ضاربا % بسيفك حتى مات حدا ومضربا % % 27(@)(@@) % وصلت على الأعداء تلعب بالقنا % % وأرواحهم حتى ظنناه ملعبا % % 28(@)(@@) % وكم مقنب في الروع يحسب واحدا ؛ % وكم واحد في الروع يحسب مقنبا % % 29(@)(@@) % فلوكنت من حرب العداة بمعزل % دعوتك في حرب النوائب محربا % % 30(@)(@@) % إذا غاب عن ذي الرأي وجه رشاده % % لجأت إلى رأي يريك المغيبا % % PageV01P070 31(@)(@@) % أساء إلينا الدهر يا بن محمد % فلما تنافرنا إليك تجنبا % % 32(@)(@@) % دعوت إلى الجدوى ومثلك من دعا % % بحي على ماء الحياةفثوبا % % 33(@)(@@) % فما بعدت نعماك عن ذي قرابة % ولا جانبت من سائر الناس أجنبا % % 34(@)(@@) % إليك ركبت الليل فردا فلم أقل % % أعاذلتي ما أخشن الليل مركبا % % 35(@)(@@) % ليصدر عنك الشعر مالا مسوما % إذا نحن أوردناه درا مثقبا % % 36(@)(@@) % فهل لك من جاز إذا اعترضت له % % شهود قوافي الشعر جد فأسهبا % % 37(@)(@@) % وضاربة في 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms18# الأرض وهي مقيمة % كأن مطاياها الجنوب أوالصبا % % 38(@)(@@) % يثقفها طب بتثقيف مثلها % % ويخدمها حتى ترق وتعذبا % % 39(@)(@@) % مطل على سهل الكلام وحزنه % % فما يصطفي إلا اللباب المهذبا % % 40(@)(@@) % تركت رحاب الشام وهي أنيقة % تقول لطلاب المكارم مرحبا % % PageV01P071 41(@)(@@) % مدبجة الأطراف مخضرة الثرى % % مصقلة الغدران موشية الربا % % 42(@)(@@) % إذا نحن طاردنا الغنيمة أمكنت % بهن وإن جلنا على الصيد أكثبا % % 43(@)(@@) % فما ذمة الأيام فيها ذميمة ؛ % ولا جانب الدنيا بها متجنبا % % 44(@)(@@) % ولكن ذا القربى أحق بمنطق % إذا كان ذوالقربى إلى الحمد أقربا % % 45(@)(@@) % وذي شرف إن عد ثهلان فاخرا % عددت له رضوى وقدسا وكبكبا % % 46(@)(@@) % تعصبت في شعري عليه ولوحوى % % عصائب تيجان الملوك تعصبا % % 47(@)(@@) % فلا زلت مبيض المكارم راخيا % بجود ومحمر الصوارم مغضبا % % 48(@)(@@) % ودونكها تتلونظيرتها التي % % هي الكوكب الدري يجنب كوكبا % % 49(@)(@@) % كأن قوافيها سهام مثقف % تصعد فيها لحظه وتصوبا % % 50(@)(@@) % كأنك منها ناظر في حديقة % تقطر فيها فارس القطر أوكبا % % PageV01P072 51(@)(@@) % كلاما يفوق المسك طيبا كأنما % % أتاك بريحان النحور مطيبا % % PageV01P073 البحر : - 1(@)(@@) % قم فانتصف من صروف الدهر والنوب % واجمع بكأسك شمل اللهوواللعب % 2(@)(@@) % أما ترى الصبح قد قامت عساكره % % في الشرق تنشر أعلاما من الذهب % 3(@)(@@) % والجويختال في حجب ممسكة % كأنما البرق فيها قلب ذي رعب % 4(@)(@@) % تجنبتك صروف الدهرفانصرفت % وقابلتك سعود العيش من كثب % 5(@)(@@) % فاخلع عذارك واشرب قهوة مزجت % بقهوة الفلج المعسول والشنب % 6(@)(@@) % والعيش في ظل أيام الصبافإذا % % ودعت طيب الشباب الغض لم يطب % 7(@)(@@) % جريت في حلبة الأهواء مجتهدا % وكيف أقصر والأيام في طلبي % % 8(@)(@@) % توج بكأسكقبل النائباتيدي % % فالكأس تاج يد المثري من الأدب % PageV01P074 البحر : - 1(@)(@@) % يريك قوامها الغصن الرطيب % ولحظ جفونها الرشأ الربيب % 2(@)(@@) % غداة بدا لها خد أسيل % ينمنم وشيه كف خضيب % 3(@)(@@) % وأدناها من الصب التنائي ؛ % كذاك الشمس يدنيها الغروب % 4(@)(@@) % فمن خد تخدده دموع ؛ % ومن قلب يقلبه حبيب % 5(@)(@@) % بظبي في الخيام له مراد % وبدر في الخدور له مغيب % 6(@)(@@) % فكم بعد الرقيبفأسعفتني % % صروف الدهرإذ بعد الرقيب % 7(@)(@@) % بصبح من محاسنه تجلى ؛ % وليل من ذوائبه يذوب % 8(@)(@@) % رويدك أيها القلب المعنى % % وقصرك أيها الدمع السكوب % 9(@)(@@) % تناءى الجود حتى ليس يدنو % % وغاب البشر حتى ما يؤب % 10(@)(@@) % وآخر حاذق في الشعر طب 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms19# % وقدم سارق فيه مريب % PageV01P075 11(@)(@@) % كبعض الصيد يرزق منه مخط % ويحرم خيره الرامي المصيب % 12(@)(@@) % سأغرب في الثناء على ابن فهد % فما هوفي الورى إلا غريب % 13(@)(@@) % تألق والخطوب لها ظلام % فأسفر والظلام له قطوب % 14(@)(@@) % وقد قرحت على الجود المآقي ؛ % وقد شقت على الشعر الجيوب % 15(@)(@@) % حلي من حلى الآداب يغني % % بحليته وشيمته الأديب % 16(@)(@@) % إذا شيمت بوارقه استهلت % % سماء من مواهبهتصوب % 17(@)(@@) % سمت بأبي الفوارس في المعالي % % ضرائب ما له فيها ضريب % 18(@)(@@) % فمن حزم تدين له الليالي ؛ % ومن رأي تدين به الغيوب % 19(@)(@@) % وزاد الأزد مأثرة فأمسى % % لها من كل مكرمة نصيب % 20(@)(@@) % منحت وليك النعم اللواتي % % كفته كل نائبة تنوب % PageV01P076 21(@)(@@) % وبين رحب صدرك من خلال % يضيق بوسعها الصدر الرحيب % 22(@)(@@) % فلما راق ناظرة الليالي % % شباب الأنس عاجله المشيب % 23(@)(@@) % متى يثني إليه عنان بشر % فتثني عنه أوجهها الخطوب % 24(@)(@@) % فقد نشر الثناء عليك منه % % خطيب ليس يشبهه خطيب % 25(@)(@@) % فسير منه وشيا ليس يبلى % % وأطلع منه شمسا لا تغيب % 26(@)(@@) % وقد غرست يمينك منه غرسا % فصنه أن يلم به شحوب % 27(@)(@@) % أيقرب منك ذونسب بعيد % ويبعد من له نسب قريب % 28(@)(@@) % ومدح فوقته لك المعالي % % فجاء كأنه برد قشيب % 29(@)(@@) % إذا ما صافح الأسماع يوما % تبسمت الضمائر والقلوب % 30(@)(@@) % فمن حسن الصنائع فيه حسن ؛ % ومن طيب المحامد فيه طيب % PageV01P077 31(@)(@@) % وليس يفوح زهر الروض حتى % % تفتحه شمال أوجنوب % PageV01P078 البحر : - 1(@)(@@) % عل طيفا سرى حليف اكتئاب % مطفىء من صبابة وتصاب % 2(@)(@@) % لم يذقنا حلاوة الوصل إلا % بين عتب مبرح وعتاب % 3(@)(@@) % كيف عنت لنا ظباء كناس % غادرتها النوى شموس قباب % 4(@)(@@) % كل ريم يشفي إذا رمت منه ال % % وصل حر الهوى ببرد الرضاب % 5(@)(@@) % لطمت خدها بحمر لطاف % نال منها عذاب بيض عذاب % 6(@)(@@) % يتشكى العناب نور الأقاحي % % واشتكى الورد ناضر العناب % 7(@)(@@) % نحن في معدن من اللؤم مطغ % دون عذب الندى أليم العذاب % 8(@)(@@) % قصدتنا يد الحوادث فيه % % بسهام من الخطوب صياب % 9(@)(@@) % ودعتنا إلى العراق هناة % لأمور تنقض مثل العقاب % % 10(@)(@@) % كل زنجية كأن سواد ال % % ليل أهدى لها سواد الإهاب % PageV01P079 11(@)(@@) % تسحب الذيل في المسيرفتختا % % لوطورا تمر مر السحاب % 12(@)(@@) % وتشق العباب كالحية السو % داء أبقت 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms20# في الرمل أثر انسياب % 13(@)(@@) % وإذا قومت رؤوس المطايا % % للسرى قومت من الأذناب % 14(@)(@@) % مهديات إلى الأمير لبابا % من ثناء يثنى من الآداب % 15(@)(@@) % زهرة غضة النسيم غذاها % % صفوماء العلوم والآداب % 16(@)(@@) % فهي كالخرد الأوانس يخلط % ن شماس الصبا بأنس التصابي % % 17(@)(@@) % رقة فوق رقة الخصر تبدي % % فطنة فوق فطنة الأعراب % 18(@)(@@) % طالبات أبا المفضل يمتت % ن إليه بأوكد الأسباب % 19(@)(@@) % خطبت وده ونائله الغم % روكم أعرضت عن الخطاب % 20(@)(@@) % ملك ما انتضى المهند إلا % % خيل بدرا يسطوبحد شهاب % PageV01P080 21(@)(@@) % خيمه في مواطن الحلمكهل % ونداه في عنفوان الشباب % 22(@)(@@) % راتع في رياض حمد أناس % رتعوا منه في رياض ثواب % 23(@)(@@) % قمر أطلعته أقمار ليل ؛ % أسد أنجبته آساد غاب % 24(@)(@@) % جلب الخيل ضمرا تلهب العش % ب إذا ما أثرن نار الضراب % 25(@)(@@) % بخميس كأنما حجب الشم % سوقد ثار نقعه بضباب % 26(@)(@@) % وكأن اللواء في الجولما % % باشرته الصبا جناحا عقاب % 27(@)(@@) % فإذا الريح نبهتهوقد أغ % ضى تبدى لها وثوب الحباب % 28(@)(@@) % في مقام للموت تحتسب الأن % فس في هبوتيه أي احتساب % 29(@)(@@) % حين أوفى على العراق طلوع ال % % بدر في ليل حادث مستراب % 30(@)(@@) % فثنى الأرض منه محمرة الأر % جاءوالأفق حالك الجلباب % PageV01P081 31(@)(@@) % آل حمدان غرة الكرم المح % ضوصفوالصريح منه اللباب % 32(@)(@@) % أشرق الشرق منهم وخلا الغر % بولم يخل من ندى وضراب % 33(@)(@@) % نزلوا منه منزلا وسموه % بالندى فهو موسم الطلاب % 34(@)(@@) % ينجلي السلم عن بدور رواض % فيهوالحرب عن أسود غضاب % 35(@)(@@) % جادنا منهم سحائب جود % أنشأتها جنوب ذاك الجناب % 36(@)(@@) % فحملنا ملء الحقائب من أف % واف مدح يبقى على الأحقاب % 37(@)(@@) % واستقلت بنا سواع تخوض ال % % بحر خوض النسور بحر السراب % 38(@)(@@) % شتتت شملها الشمالوأمست % % كالغرابيب عذبت باغتراب % PageV01P082 البحر : - 1(@)(@@) % أتظن أن الدهر يسعف طالبا % أوتعتب الأيام منا عاتبا % % 2(@)(@@) % فقد النوالفعاد برقا خلبا % ومضى السماحفعاد وعدا كاذبا % 3(@)(@@) % وطوى الردى شيم ابن فهد بعدما % % نشرت بدائع سؤدد وغرائبا % % 4(@)(@@) % ليت الردى لما سما لك جحفل % ملأ البلاد أسنةوقواضبا % % 5(@)(@@) % فيؤوب مغلوبا لديك مذمما % وتؤوب محمود السجية غالبا % % 6(@)(@@) % يبكيك عزم لم يزل إشراقه % % في كل مظلمة شهابا ثاقبا % % 7(@)(@@) % وسماء مجد إن تغيم أفقها % % أطلعت فيها بالسيوف كواكبا % % 8(@)(@@) % ورغائب شيدتها بمواهب % لوأنهن نطقن 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms21# قمن خواطبا % % 9(@)(@@) % في مضجع وسع الحسين وجوده % % يسع البلاد مشارقا ومغاربا % % 10(@)(@@) % لوأن قبرا جاد ساكن لحده % لم يرجع المرتاد منه خائبا % % PageV01P083 البحر : - 1(@)(@@) % لأبي الفوارس في السماح مآرب % تقضى فتقضي للعفاة مآربا % % 2(@)(@@) % ملك أبر على الملوك بهمة % زيدت بها الأزد الكرام مناقبا % % 3(@)(@@) % وأغر يحسن منظرا وضرائبا % كالسيف يحسن رونقا ومضاربا % % 4(@)(@@) % ومناسب السيف الحسامفإن جرى % % في الجود أصبح للسحاب مناسبا % % 5(@)(@@) % شيم كأنفاس الرياح جرت على % % زهر الربيع شمائلا وجنائبا % % 6(@)(@@) % طلب العفاة نوالهفبدا لهم % % متهللا للحمد منهم طالبا % % 7(@)(@@) % ورأى الزمان عليهم متعتبا % فغدا له بالمكرمات معاتبا % % 8(@)(@@) % كم قد رأيت لبشره من شارق % يحتث من جدوى يديه سحائبا % % 9(@)(@@) % فأريته زهر الربيع مدائحا % ورأيت منه حيا الربيع مواهبا % % PageV01P084 البحر : - 1(@)(@@) % تحية الغيث منهلا سحائبه % % على العقيق وإن أقوت ملاعبه % % 2(@)(@@) % لا بل على الحي منشودا هوادجه % % على الشموس ومذموما ركائبه % % 3(@)(@@) % حتى ترد عليه آية سلكت % ظباؤها الغيدأوحلت ربائبه % % 4(@)(@@) % ففي الظعائن مجنوب لغانية % تغنى بوصل سواهأوتجانبه % % 5(@)(@@) % وفي الديار سميع ليس تسمعه % % إجابة وخطيب لا تخاطبه % % 6(@)(@@) % حتى تبدل للعشاق زورته % % طيف يصد عن العشاق صاحبه % % 7(@)(@@) % سرى إلى البدر يخفي البدر منتقبا % والبدر يأنف أن تخفي مناقبه % % 8(@)(@@) % إذا بدا الصبح من إشراق طلعته % % أبدت لك الليل مسودا ذوائبه % % 9(@)(@@) % والحسن ضدان لا أدري إذا اجتمعا % % أنواره فتنتني أم غياهبه % % 10(@)(@@) % حليه وثناياه وعنبره % % كل ينم عليه أو يراقبه % % PageV01P085 11(@)(@@) % فلست أدريإذا ما سار في أفق % شمائل الأفق أذكى أم جنائبه % % 12(@)(@@) % أما القريضفما تحظى محاسنه % % عند الملوك كما تحظى معائبه % % 13(@)(@@) % وربما ظلم الدينار ناقده % % وقد كساه ضروب الحسن ضاربه % % 14(@)(@@) % كأنني بنجيب الشعر قد رحلت % عنهم إلى الشرف الأعلى نجائبه % % 15(@)(@@) % ولو تشاءم لانقضت صواعقه % % على العراق كما ارفضت سحائبه % % 16(@)(@@) % قل للذي قلدتني كفه رسني % % وكنت أدنوإليهوهوجاذبه % % 17(@)(@@) % لك الأمان إذا انسابت أراقمه % % من المكامن أو دبت عقاربه % % 18(@)(@@) % ليس الصديق الذي أعطاك شاهده % % شهد الوداد وخان الغيب غائبه % % 19(@)(@@) % كم منطق كسحيق المسك ظاهره % % لم يقض عند أبي إسحاق واجبه % % 20(@)(@@) % كانت مدائحنا غرا محجلة % تثني عليهفقد أضحت تعاتبه % % PageV01P086 21(@)(@@) % وما أقول لمن طابت عناصره % % في رتبة المجدوابيضت مناسبه % % 22(@)(@@) % أغر 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms22# زان مديحي فضل سؤدده % % كلؤلؤ العقد زانته ترائبه % % 23(@)(@@) % وصادق الود لا ترتد خلته % % على الصديقولا يزور جانبه % % 24(@)(@@) % لا أستريح إلى زور ولا كذب % يهدى إليهوشر القول كاذبه % % 25(@)(@@) % وليس للذم فيه مذهب فيرى % % أنى ومن ذهب صيغت مذاهبه % % 26(@)(@@) % نبا عليفما أدري لنبوته % % أنياب دهري أمضى أم نوائبه % % 27(@)(@@) % هو الحسام لقوم ماء صفحته % % بشاشة ولأقوام مضاربه % % 28(@)(@@) % والغيث إن برقت نحوي مخائله % % راحت تصوب على غيري صوائبه % % 29(@)(@@) % هذا وما صدئت قدما مسامعه % % بما نظمتولا ضاعت مواهبه % % 30(@)(@@) % ولي من الأدب المحمود أثمره % % ينمى إليه وأعراف تناسبه % % PageV01P087 31(@)(@@) % ورغبة كلما جاءت معرضة % بجاهه أعرضت عنها رغائبه % % 32(@)(@@) % وكم ضربت بماض منه ذي شطب % عضب مضاربه حلوضرائبه % % 33(@)(@@) % وردت في طيب الأنفاس ذي ثمر % قريبة من يد الجاني أطايبه % % 34(@)(@@) % عاقبتني بجفاء لا أقوم به % % فهل عقابك محمود عواقبه % % 35(@)(@@) % وعاد رأيك لي سودا مشارقه % % وكنت أعهده بيضا مغاربه % % 36(@)(@@) % الشعر وشي برود أنت ساحبه % % فهما ودر عقود أنت ثاقبه % % 37(@)(@@) % فلم منعت على الإحسان محسنه % % ما نال من جاهك المبذول خاطبه % % 38(@)(@@) % وزاهر الحمد إن أنصفته زهر % يطيب رياهإن طابت مشاربه % % 39(@)(@@) % أكان في العدل أن تظما حدائقه % % بساحتيك وأن تروى سباسبه % % 40(@)(@@) % لقد نثرت على قوم حصى كلم % لوشئت لآنتثرت فيكم كواكبه % % PageV01P088 41(@)(@@) % لولاك ما ارتديت أطمارهوغدت % % تردوهي أنيقات سبايبه % % 42(@)(@@) % لأصبرن على إخلال عرفك بي % % حتى يثوب إلى المعهود ثائبه % % 43(@)(@@) % عسى العتاب يرد العتب منك رضا % وربما أدرك المطلوب طالبه % % PageV01P089 البحر : - 1(@)(@@) % هذه الشمس أوشكت أن تغيبا % % فأقلا الملام والتأنيبا % % 2(@)(@@) % أوجبت لوعة الفراق على الصب % ب جوى يقرح الفؤاد وجيبا % % 3(@)(@@) % لن يرى غالب الصبابة حتى % % يدع اللوم في الهوى مغلوبا % % 4(@)(@@) % حث غرب من المدامع غربا % حين رامت تلك الشموس الغروبا % % 5(@)(@@) % أعرضت خيفة الرقيبولولا % % ه لكان الإعراض منها رقيبا % % 6(@)(@@) % وأرته برق الثغورفأبدى % % بارق الشوق في حشاه لهيبا % % 7(@)(@@) % والثنايا العذاب تثني على الوج % د الحشا أوتضاعف التعذيبا % % 8(@)(@@) % حي ربعا لهن يزداد حسنا % ومحلا منهن يزداد طيبا % % 9(@)(@@) % سلبته النوى بدور تمام % تركتني من العزاء سليبا % % 10(@)(@@) % قد قطعن البلاد شرقا وغربا % وبلونا الورى فتوا وشيبا % % PageV01P090 11(@)(@@) % ونزلنا بكل مجتذب المن % % زل 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms23# نرعى لديه ربعا جديبا % % 12(@)(@@) % قرب الوعدوالنوال بعيد % فأراني النوى بعيدا قريبا % % 13(@)(@@) % فدعونا أبا الفوارس للجو % % دفكان القريب فيه المجيبا % % 14(@)(@@) % وهززناه للمكارم فاهتز % كما هزت الرياح القضيبا % % 15(@)(@@) % فرأينا مهذب الفعل يكسى % % حلل المدح هذبت تهذيبا % % 16(@)(@@) % ونسيب الحسام أسرف في الجو % % د فخلناه للسحاب نسيبا % % 17(@)(@@) % يا غريب السماح والمجد والسؤ % % دد أصبحت في الأنام غريبا % % 18(@)(@@) % ملك عدت الملوك من الأز % % دفكان الشريف منها الأديبا % % 19(@)(@@) % راح يبدي لمن أتى مستجيرا % من صروف الزمان أو مستثيبا % % 20(@)(@@) % خلقا مشرقا ووجها طليقا % ونوالا جزلا ورأيا صليبا % % PageV01P091 21(@)(@@) % قمر لاح في سحابة جود % منه ما زال ذيلها مسحوبا % % 22(@)(@@) % ورأى البدر في دجاه حميدا % والحيا في أوانه محبوبا % % 23(@)(@@) % كلما مدت الحوادث باعا % مد للمكرمات باعا رحيبا % % 24(@)(@@) % وإذا خاض غمرة الموت رد الس % سيف من غمرة الدماء خضيبا % % 25(@)(@@) % شيم لا تزال تشجي قلوبا % من أعاديهأوتسر قلوبا % % 26(@)(@@) % وخلال أغض من زهر الرو % ض كسته الثناء غضا قشيبا % % 27(@)(@@) % فاطلب المكرمات بالحمد منه % % تجد الحمد عنده مطلوبا % % 28(@)(@@) % يا بن فهد أحلني جود كفي % ك محلا رحب الجناب رحيبا % % 29(@)(@@) % أنت أضحكت لي الزمان فأبدى ال % % بشر منهوكان يبدي القطوبا % % 30(@)(@@) % فمتى لم أقم بشكرك في النا % % س خطيبا فلا وقيت الخطوبا % % PageV01P092 البحر : - 1(@)(@@) % لقد طمع البشري في ولم يكن % ليطمع في المرء وهو لبيب % 2(@)(@@) % خلعت عليه من ثنائي خلعة % تحن إليها أنفس وقلوب % 3(@)(@@) % فقطب حتى خلت أن قد وسمته % وذواللؤم فيه ضجرة وقطوب % 4(@)(@@) % وقاسمني جود الأمير كأنما % % له في القوافي السائرات نصيب % PageV01P093 البحر : - 1(@)(@@) % أرى الشاعر الملحي راح بنا صبا % % نباغضه عمدا فيوسعنا حبا % % 2(@)(@@) % دعانا ليستوفي الثناء فأظلمت % خلائق تستوفي لصاحبها السبا % % 3(@)(@@) % تيمم كرخايافجاد قليبها % % عليه وما شرب القليب لنا شربا % % 4(@)(@@) % وأحضرنا محبوسة طول ليلها % % معذبة بالنار مسعرة كربا % % 5(@)(@@) % تحتت من رطب الذؤابة لحمها % % ومن يابس الحب الثقيل لها الحبا % % 6(@)(@@) % وساهرها ليلا يضيق سجنها % % فلما أضاء الصبح أوسعها ضربا % % 7(@)(@@) % إذا مسحتها الريح راحت كأنما % % تمسح موتى كشفت عنهم التربا % % 8(@)(@@) % وداذنة تنهى الصباحإذا بدا % % وتفسد أنفاس النسيمإذا هبا % % 9(@)(@@) % شراب يفض الطين عنهإذا بدا % % ثلاثة أيام وقد شب لا 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms24# شبا % % 10(@)(@@) % يمد بأطراف النهاروما افترى % % ولا كان خدنا للزناة ولا تربا % % PageV01P094 11(@)(@@) % فلما تراءت للجميع حبالنا % % عجبت لمضروبين لا جنيا ذنبا % % PageV01P095 البحر : - 1(@)(@@) % تناهى فاطمأن إلى العتاب % وأحسن للعواذل في الخطاب % 2(@)(@@) % وسار جنيب غصن غير رطب % وكان جنيب أغصان رطاب % 3(@)(@@) % خلت منه ميادين التصابي % % وعري منه أفراس الشباب % 4(@)(@@) % وزهده خضاب الناس لما % % تولى عنه في زور الخضاب % 5(@)(@@) % ورد كؤوسه في الحلي تجلى % % وكان يردها عطل الرقاب % 6(@)(@@) % وأيقن أنه ظفر الليالي % % تبين في شبا ظفر وناب % 7(@)(@@) % وإن غادرت مصباحا ضئيلا % فقد ساورن أثقب من شهاب % 8(@)(@@) % رأيت رداءه عبئا عليه % % وسهل طريقه حزن الشعاب % 9(@)(@@) % كأن لم يغن فتيان العوالي % % بنجدتهوفتيان التصابي % % 10(@)(@@) % ولم يعدل صفاء العيش فيهم % % وبعضهم قذاة في شراب % PageV01P096 11(@)(@@) % ورب معصفرات القمص طافت % عليه بها معصفرة النقاب % 12(@)(@@) % وألفاظ له عذبتفأغنت % غناء الراح بالنطف العذاب % 13(@)(@@) % يكررها على راووق فكر % فيبعثها كرقراق السراب % 14(@)(@@) % وخرق طال فيه السير حتى % % حسبناه يسير مع الركاب % 15(@)(@@) % صحبنا فيه ترحات التنائي % % على ثقة بفرحات الإياب % 16(@)(@@) % إلى الخرق الذي يلقى الأماني % % رحيب الصدر منه والرحاب % 17(@)(@@) % لقد أضحت خلال أبي حصين % حصونا في الملمات الصعاب % 18(@)(@@) % كساني ظل نائلهوآوى % % غرائب منطقي بعد اغتراب % 19(@)(@@) % فكنت كروضة سقيت سحابا % فأثنت بالنسيم على السحاب % 20(@)(@@) % عطاء يستهل البشر فيه % % فيبعثه انسكابا في التهاب % PageV01P097 21(@)(@@) % كما سارت مؤلفة الهوادي % % بلمع البرق مذهبة الرباب % 22(@)(@@) % تجرد للجهادفكان عضبا % حديد الحد فيه غير نابي % % 23(@)(@@) % ينازل مصلتا من كل أوب % ويدخل معلما من كل باب % 24(@)(@@) % وأشيب عاين العلياء طفلا % فقارع قبل تقريع العتاب % 25(@)(@@) % وحرم مسمعيه على الملاهي % % وهداب الإزار على التراب % 26(@)(@@) % يروعكوهومصقول السجايا % % إذا ما هز مصقول الذباب % 27(@)(@@) % وقد شغلت كعوب الرمح منه % % يديه عن ملامسة الكعاب % 28(@)(@@) % وخف عليه ثقل الدرع حتى % % كأن دروعه سرق الثياب % 29(@)(@@) % وكم خرق الحجاب إلى مقام % توارى الشمس فيه بالحجاب % 30(@)(@@) % إذا شنت به الغارات كانت % % نفوس المعلمين من النهاب % PageV01P098 31(@)(@@) % كأن سيوفه بين العوالي % % جداول يطردن خلال غاب % 32(@)(@@) % وخيل قادها في جنح ليل % تطير بوطئها نار الضراب % 33(@)(@@) % إذا مرقت من الظلماء أذكت % على المراق ثائرة العذاب % 34(@)(@@) % وقرن شام صفحتهفعادى 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms25# % % صفيحة سيفه عند الضراب % 35(@)(@@) % وقد وضحت سطور البيض فيه % % كما وضحت سطور في كتاب % 36(@)(@@) % مناقب تملأ الحساد غيظا % وتغني الطالبين عن الطلاب % 37(@)(@@) % وحكم تفرق الأعداء منه % % كأنك فيه فاروق الصحاب % % 38(@)(@@) % يودك فيه من تقضي عليه % % لشافي الحكم أوكافي الصواب % 39(@)(@@) % إليك زففتها عذراء تأوي % % حجاب القلب لا حجب النقاب % 40(@)(@@) % أذبت لصوغها ذهب القوافي % % فأدت رونق الذهب المذاب % PageV01P099 41(@)(@@) % تهاداها الملوك كما تهادت % أكف البيض منظوم السحاب % 42(@)(@@) % تروقكوهي ناجمة المعاني % % كما راقتك ناجمة الحباب % PageV01P100 البحر : - 1(@)(@@) % حسب الأمير سماح وطد الحسبا % % ورتبة في المعالي فاتت الرتبا % % 2(@)(@@) % أعطى فقال العفاة النازلون به % % أنائلا أنشأت كفاه أم سحبا % % 3(@)(@@) % أغر لا يتحامى قرنه بدا % حتى يرد غرار السيف مختضبا % % 4(@)(@@) % كالليث لا يسلب الأعداء بزهم % في الروع لكن ترى أرواحهم سلبا % % 5(@)(@@) % لا يعرف الغدر ما ضمت جوانحه % % على الوفاءولا يبقي إذا وثبا % % 6(@)(@@) % أما عدي فقد عدته سيدها % % نجابةوهي تدعى السادة النجبا % % 7(@)(@@) % أسد إذا حاولت أرض العدا حملت % على الكواهل أما برة وأبا % % 8(@)(@@) % لما هممت بآثار مجددة % حدوت للحاسد الأحزان والكربا % % 9(@)(@@) % أنشأته منزلا في قلب دجلة لا % % تمتاح جنته الغدران والقلبا % % 10(@)(@@) % صفا الهواء به والماء فاشتبها % % كأن بينهما من رقة نسبا % % PageV01P101 11(@)(@@) % وأصبح الغيث مخلوع العذار به % % فليس يخلع أبراد الحيا القشبا % % 12(@)(@@) % فمن جنان تريك النور مبتسما % في غير إبانهوالماء منسكبا % % 13(@)(@@) % ومن سواق على خضراء تحسبها % % مخضرة البسط سلوا فوقها القضبا % % 14(@)(@@) % كأن دولابهاإذ حنمغترب % نأى فحن إلى أوطانه طربا % % 15(@)(@@) % باك إذا عق الروض والده % % من الغمامغدا فيه أبا حدبا % % 16(@)(@@) % مشمر في مسير ليس يبعده % عن المحلولا يهدي له تعبا % % 17(@)(@@) % ما زال يطلب رفد البحر مجتهدا % للبر حتى ارتدى النوار والعشبا % % 18(@)(@@) % فالنخل من باسق فيه وباسقة % يضاحك الطلع في قنوانه الرطبا % % 19(@)(@@) % أضحت شماريخه في الجومطلعة % إما ثرياوإما معصما خضبا % % 20(@)(@@) % تريك في الظل عقيانا فإن نظرت % شمس النهار إليها خلتها لهبا % % PageV01P102 21(@)(@@) % و الكرم مشتبك الأفنان توسعنا % % أجناسه في تساوي شربها عجبا % % 22(@)(@@) % فكرمة قطرت أغصانها سبجا ؛ % و كرمة قطرت أغصانها ذهبا % % 23(@)(@@) % كأنما الورق المخضر دونهما % % غيران يكسوهما من سندس حجبا % % 24(@)(@@) % و الماء مطرد 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms26# فيه ومنعرج % كأنما ملئت حياته رعبا % % 25(@)(@@) % و بركة ليس يخفي موج لجتها % % من القذى ما طفا فيها وما رسبا % % 26(@)(@@) % تسدي عليها الصبا بردا فإن ركدت % رأيته دارس الأفواف مستلبا % % 27(@)(@@) % قد كالمت بنجوم للحباب ضحى % % فإن دجا الليل عادت أنجما شهبا % % 28(@)(@@) % ترى الإوز سروبا في ملاعبها % % كما تأملت في ديباجة لعبا % % 29(@)(@@) % يرف منه على أمواجها زهر % أربى على الزهر حتى عاد مكتئبا % % 30(@)(@@) % مسلم و سباع الطير حائمة % يخطفن ما طار في الآفاق أو سربا % % PageV01P103 31(@)(@@) % كأنما الجارح المرهوب يحذره % % فليس يوفي عليه جارح ذهبا % % 32(@)(@@) % و سهم فوارة ما ارتد رائده % % حتى أصاب من العيوق ما طلبا % % 33(@)(@@) % أوفى ولم تثنه حرب الشمالو قد % % لاقتهفاعتركا في الجو واحتربا % % 34(@)(@@) % كأن بركته درع مضاعفة % تقل رمح لجين منه منتصبا % % 35(@)(@@) % و القصر يبسم في وجه الضحى فترى % % وجه الضحى عندما أبدى لنا شحبا % % 36(@)(@@) % يبيت أعلاه بالجوزاء منتطقا % و يغتدي برداء الغيم محتجبا % % 37(@)(@@) % تطأمن نحوه الإيوان حين سما % % ذلا فكيف تضاهي فارس العربا % % 38(@)(@@) % إذا القصور إلى أربابها انتسبت % أضحى إلى القمة العلياء منتسبا % % 39(@)(@@) % فصله لا وصلتك الحادثاتو لا % % زالت سعودك فيه تنفذ الحقبا % % 40(@)(@@) % بر وبحر وكثبان مدبجة % ترى النفوس الأماني بينها كثبا % % PageV01P104 41(@)(@@) % و منزل لا تزال الدهرعقوته % % جديدة الروض جد الغيث أو لعبا % % 42(@)(@@) % حصباؤه لؤلؤ نثر و تربته % % مسك ذكي فلو لم تحمه انتهبا % % 43(@)(@@) % و كل ناحية منه زبرجدة % أجرى اللجين عليها جدولا سربا % % 44(@)(@@) % فإن دعاك إليه ذكر مأدبة % فما نشأتو فيها للعلى أدبا % % 45(@)(@@) % و إن دعاك له ظل فرب وغى % جعلت ظلك منها السمر والعذبا % % 46(@)(@@) % لا تكذبن فإني في مدائحكم % % مصدق القوللا أستحسن الكذبا % % 47(@)(@@) % من رام في الشعر شأوي كل عنهو من % ناوى أبا تغلب في سؤدد غلبا % % PageV01P105 البحر : - 1(@)(@@) % نسالم هذا الدهرو هو لنا حرب % و نعتبو الأيام شيمتها العتب % 2(@)(@@) % و نخطب صلح النائباتو لم يزل % % لأنفسنا من خطبها أبدا خطب % 3(@)(@@) % تهم بنا أفراسها وسيوفها % % فلا هذه تكبو ولا هذه تنبو % % 4(@)(@@) % و كنا نعد المشرفية والقنا % % حصونا إذا هزت مضاربها الحرب % 5(@)(@@) % فلما مضى المقدار قل غناؤها % % فلم 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms27# يمض حد من ظباهاو لا غرب % 6(@)(@@) % تبلد هذا الدهر فيما نرومه % % على أنهفيما نحاذره ندب % 7(@)(@@) % فسير الذي يرجوه سير مقيد % و سير الذي يخشى غوائله وثب % 8(@)(@@) % إذا فاجأتنا الحادثات بمصرع % فليس سوى الجنب الكريم لنا جنب % 9(@)(@@) % فعز الأمير التغلبي ورهطه % % بمن غربت عنه الغطارفة الغلب % 10(@)(@@) % بسيدة عمت صنائعها الورى % % فأعرب عن معروفها العجم والعرب % PageV01P106 11(@)(@@) % و مشرفة الأفعال لم يحو مثلها % % إذا عدد النسوانشرق ولا غرب % 12(@)(@@) % تساوت قلوب الناس في الحزنإذ ثوت % كأن قلوب الناس في موتها قلب % 13(@)(@@) % و كانت سهول الأرض دون هضابها % % فلما حواها السهل ذل له الصعب % 14(@)(@@) % فإن كانفيمن غيب التربتربها % % فمريممن دون النساءلها ترب % 15(@)(@@) % و طوبى لماء المزن لو أن ظهرها % % لريقه ما فاض ريقه السكب % 16(@)(@@) % و أقسم لو زادت على المسك تربة % لزاد على المسك الذكي بها الترب % 17(@)(@@) % فضائل ينفدن الثناء كأنما % % ثناء ذوات الفضل من حسنها ثلب % 18(@)(@@) % لقد جاورت من قوم يونس معشرا % أحبت بروح لا يجاوره كرب % 19(@)(@@) % فقد بردت تلك المضاجع منهم % % فأشرق ذاك النور فيها فما يخبو % % 20(@)(@@) % فلله ما ضم الثرى من عفافها % % و ما حجبتها من طهارتها الحجب % PageV01P107 21(@)(@@) % لئن كان وادي الحصن رحبا لقد ثوى % % بعرصته المعروف والنائل الرحب % 22(@)(@@) % و إن عذبت رياهأو طاب نشره % % فقد مل في بطحائها الكرم العذب % 23(@)(@@) % عجبت له أنى تضمن مثلها % % و لا كبر يعروه ذاكو لا عجب % 24(@)(@@) % و لو علمت بطحاؤه ما تضمنت % % تطاولت البطحاء وافتخر الشعب % 25(@)(@@) % تذال مصونات الدموع إزاءها % % و تمشي حفاة حولها الرجل والركب % 26(@)(@@) % فلا زال رطب الروض من ريق الندى % % كأن الندى من فوقه اللؤلؤ الرطب % 27(@)(@@) % أبا تغلب صبرا و مازلت صابرا % إذا زلحزم ثابت أو هفا لب % 28(@)(@@) % فقد أعقبت منكم أسود شجاعة % و كم معقب في الناس ليس له عقب % 29(@)(@@) % و أنتم جناب المكرماتو لم يكن % % لتهفو رواسيهاو إن عظم الخطب % 30(@)(@@) % فكل حيا للجود أنتم سحابه ؛ % و كل رحى للحرب أنتم لها قطب % PageV01P108 31(@)(@@) % و لو أنه غير الحمام صببتم % % عليه سحابا قطره الطعن والضرب % 32(@)(@@) % أرى أرضكم أضحت سماء بعزكم % % فأنتم لها 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms28# الأقمارو الأنجم الشهب % 33(@)(@@) % تموت عداكم قبل سل سيوفكم % % و يفنيهم من قبل حربكم الرعب % 34(@)(@@) % و كيف تنال الحرب منكمو إنما % % بأمركم تمضي العوامل والضرب % 35(@)(@@) % إذا أنت كاتبت العدا مثلت لها % % ظباكفنابت عن كتائبك الكتب % 36(@)(@@) % دعانا الأمير التغلبي إلى الندى % % فنحن له شرب الندى و هو الشرب % 37(@)(@@) % نصاحب أياما له عدوية % محاسن أيام الشباب لها صحب % 38(@)(@@) % هو الغيث نال الخافقين نواله % % إلى أن تساوى عنده البعد والقرب % 39(@)(@@) % يزور الندى زواره متواترا % عليهمو زوار الحيا أبدا غب % 40(@)(@@) % أأعداءه كفوا فإن نصيبكموليس على البحر الذي راح زاخرا ملام إذا لم % % إذا رمتم إدراك غايته النصبسقط بيت % % PageV01P109 41(@)(@@) % و هل يستوي عذب المياه وملحها % % و هل يتكافا الخصب في الأرض والجدب % 42(@)(@@) % فإن عجز الأقوام أو بان نقصهم % % فليس لمن بانت فضيلته ذنب % 43(@)(@@) % رأيتك طبا للقريضو لم يكن % % لينظمه إلا الخبير به الطب % 44(@)(@@) % و لا بد أن أشكو إليك ظلامة % و غارة مغوار سجيته الغصب % 45(@)(@@) % تخيل شعري أنه قوم صالح % هلاكا و أن الخالدي له السقب % 46(@)(@@) % رعى بين أعطان له ومسارح % و لم يرع فيهن العشار ولا النجب % 47(@)(@@) % و كان رياضا غضةفتكدرت % مواردها واصفر في تربها العشب % 48(@)(@@) % تساق إلى الهجر المعارف خيله % وتسبله الغر المحجلة القب % 49(@)(@@) % غضبت على ديباجه وعقوده % % فديباجه غصب وجوهره نهب % 50(@)(@@) % و أبكارها شتى أذيل مصونها % % و ريعت عذاراها كما روع السرب % PageV01P110 51(@)(@@) % يعريكم من عصبه وبروده % % عصائب شتى لا يليق بها الغصب % 52(@)(@@) % فإن ريع سربي أو تمرد دونه % % و لم ينجني منه الحماية والذب % 53(@)(@@) % فعندي هناء للعدو يهينه % % إذا اختلفت منه خلائقه الجرب % 54(@)(@@) % فكنتإذا ما قلت شعرا حدت به % % حداة المطايا أو تغنت به الشرب % PageV01P111 البحر : - 1(@)(@@) % شفاه قربا وقد أشفى على العطب % خيال نائية حياه من كثب % 2(@)(@@) % ألم يتحفه بالورد من خفر % في وجنتيهو بالصهباء من شنب % 3(@)(@@) % فبات عذب الرضا والظلم ليلته % % و ربما بات مر الظلم والغضب % 4(@)(@@) % إذا تجلى جلا الخدين في خفر % و إن تثنى ثنى العطفين من تعب % 5(@)(@@) % و كيف بالجد منهاو هي لاعبة % تهدي إلى الصب جد الشوق في 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms29# اللعب % 6(@)(@@) % تعرضت لي في بيض السوالف لا % % يسلفن وعدا و لا يقرفن بالريب % 7(@)(@@) % من بارز بحجاب الصون محتجب % و سافر بنقاب الورد منتقب % 8(@)(@@) % حتى كأن سجوف الرقم ضاحية % تكشفت عن دمى منهن أو لعب % 9(@)(@@) % هلا ونحن على كثب اللوى اعترضت % % تلك المحاسن من قضب ومن كثب % 10(@)(@@) % أيام لي في الهوى العذري مأربة % و ليس لي في هوى العذال من أرب % PageV01P112 11(@)(@@) % سقى الغمام رباها دمع مبتسم % و كم سقاها التصابي دمع مكتئب % 12(@)(@@) % و لو حمدت بها الأيام قلتسقى % % ربوعها أحمد المحمود في النوب % 13(@)(@@) % سأبعث الحمد موشيا سبايبه % % إلى الأمير صحيحا غير مؤتشب % 14(@)(@@) % إن المدائح لا تهدى لناقدها % % إلا وألفاظها أصفى من الذهب % 15(@)(@@) % كم رضت بالفكر منها روضة أنفا % تفتح الزهر منها عن جنى الأدب % 16(@)(@@) % إذا الرجا هز أرواح الكلام بها % % أتتك أحسن من مهتزة القصب % 17(@)(@@) % لفظ يروح له الريحان مطرحا % إذا جعلناه ريحانا على النخب % 18(@)(@@) % أما تراه أبا العباس معترضا % على السها ويدي تجنيه من قرب % 19(@)(@@) % خطى المكارم فرد الحسن مغتربا % يلوذ منه بفرد الجود مقترب % 20(@)(@@) % مقسم بين نفس حرة ويد % مقابل بين أم برة وأب % PageV01P113 21(@)(@@) % مصباح خطب له في كل مظلمة % صبح من العز أو صبح من الحسب % 22(@)(@@) % إذا بلونا عديا يوم عادية % كانت ضرائبها أحلى من الضرب % 23(@)(@@) % قوم هم البيض أفعالا إذا اطردت % جداول البيض في غاب القنا الأشب % 24(@)(@@) % راح الصيامفولى عنك منقضبا % ورحت عنه بأجر غير منقضب % 25(@)(@@) % فعاد فطرك في نعماء سابغة % و في سعود إليها ساقة الحقب % 26(@)(@@) % أتاك والجو يجلى في ممسكة % و الأرض تختال في أبرادها القشب % 27(@)(@@) % إذا ألح حسام البرق مؤتلقا % في الروض جد خطيب الرعد في الخطب % 28(@)(@@) % فللخمائل بسط غير زائلة % و للسحائب ظل غير مستلب % 29(@)(@@) % تملها يا ابن نصر فهي سيف وغى % ماضي الظبا وشهاب ساطع اللهب % 30(@)(@@) % تسريفتخفق أحشاء العدو لها % % كأنها راية خفاقة العذب % PageV01P114 31(@)(@@) % تكاد تبرق لو أن الثناء له % % كتيبة برقت من قبل في الكتب % 32(@)(@@) % فلو هتفت بها في يوم ملحمة % قامت مقام القنا والبيض واليلب % PageV01P115 البحر : - 1(@)(@@) % أهون علي بعبد الله 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms30# إن غضبا % % فما له عندي العتبى إذا عتبا % % 2(@)(@@) % كسوته حبرات المدح مذهبة % و قلت قد ملئت كفي به ذهبا % % 3(@)(@@) % و قد ضربت بسيف مرهف فنبا % % و قد قدحت بزند مضرم فخبا % % 4(@)(@@) % حتى إذا الإذن من نجواه قربني % % و رفع الحاجب الأستار والحجبا % % 5(@)(@@) % و قفت بين يدي نجواه من حمق % أصب في أذنيه الزور والكذبا % % 6(@)(@@) % إذا وعى المدح لم يطرب لبهجته % % و إن تصافع قوم عنده طربا % % PageV01P116 البحر : - 1(@)(@@) % هي الدنيا وزينتها الشباب % و في اللذات بعدهما ارتياب % 2(@)(@@) % فلا تذهب بك الأطماع واذهب % كؤوسك لي فقد حان الذهاب % 3(@)(@@) % نزلنا منزلا من سرمرى % % به اللذات صافية عذاب % 4(@)(@@) % حديث كابتسام الروض جادت % عليه بفيض أدمعها السحاب % 5(@)(@@) % و أقداح تفوح المسك طيبا % ويكمد عندها الذهب المذاب % 6(@)(@@) % إذا ما الراح والأترج لاحا % % لعينك قلت أيهما الشراب % PageV01P117 البحر : - 1(@)(@@) % هفا طربا في أوان الطرب % فأنخب أقداحه بالنحب % 2(@)(@@) % و غنى ارتياحا إلى عارض % يغني وعبرته تنسكب % 3(@)(@@) % غيوم تمسك أفق السما % % وبرق يكتبها بالذهب % % 4(@)(@@) % وخضراء تنثر فيها الصبا % % فريد ندى ما له من ثقب % % 5(@)(@@) % فأنوارها مثل نظم الحلى % % وأنهارها مثل بيض القضب % % 6(@)(@@) % شهدت بها في ندامى سلوا % % عن الجد واستهتروا باللعب % % 7(@)(@@) % وأغناهم عن بديع السماع % % بدائع ما ضمنته الكتب % % 8(@)(@@) % و أحسن شيء ربيع الحيا % % أضيف إليه ربيع الأدب % % PageV01P118 البحر : - 1(@)(@@) % الماء يلعب كالأراقم موجه % % والسفن بالأذناب فيه عقارب % 2(@)(@@) % و الصوت من دولاب كل متوج % أطفال زنج للرضاع نوادب % 3(@)(@@) % فانظر إليه كأنهو كأنما % % كيزانهوالماء منها ساكب % 4(@)(@@) % فلك يدور بأنجم جعلت له % % كالعقد فهي شوارق وغوارب % PageV01P119 البحر : - 1(@)(@@) % جاءت هديتك التي % % هي شمسنا بعد الغياب % % 2(@)(@@) % حليت أفق محلنا % % منها بنجم أو شهاب % % 3(@)(@@) % بسليلة النحل الكري % % مشقيقة النطف العذاب % % 4(@)(@@) % صفر الجسومكأنما % % صيغت من الذهب المذاب % % 5(@)(@@) % فكأن ماء الحسنإذ % % شرقت بهماء الشباب % % 6(@)(@@) % فإذا ذكت نيرانها % % ليلا و جدت في التهاب % % 7(@)(@@) % أنساك طيب دخانها % % طيب العبير أو الملاب % % 8(@)(@@) % و إذا عرتها مرضة % فشفاؤها ضرب الرقاب % % 9(@)(@@) % تثني الدجى عن لونه % % فيعود مبيض الحجاب % 10(@)(@@) % لولا غرائب فعلها % % لارتد في لون الغراب % % PageV01P120 البحر : - 1(@)(@@) % بكرت عليك مغيرة الأعراب % فاحفظ ثيابك يا 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms31# أبا الخطاب % 2(@)(@@) % ورد العراق ربيعة بن مكدم % و عتيبة بن الحارث بن شهاب % 3(@)(@@) % أفعندنا شك بأنهما هما % % في الفتك لا في صحة الأنساب % 4(@)(@@) % جلبا إليك الشعر من أوطانه % % جلب التجار طرائف الأجلاب % 5(@)(@@) % فبدائع الشعراء فيما جهزوا % % مقرونة بغرائب الكتاب % 6(@)(@@) % تبا لقوم لا تزال حلومهم % % و عقولهم في ضلة وتباب % 7(@)(@@) % لهما من الحظ الصوارم والقنا ؛ % و من الطروس نفيسة الأسلاب % 8(@)(@@) % شنا على الآداب أقبح غارة % جرحت قلوب محاسن الآداب % 9(@)(@@) % فحذار من حركات صلي قفرة % و حذار من حركات ليثي غاب % 10(@)(@@) % لا يسلبان أخا الثراءو إنما % % يتناهبان نتائج الألباب % PageV01P121 11(@)(@@) % إن عز موجود الكلام عليهما % % فأنا الذي وقف الكلام ببابي % % 12(@)(@@) % أو يهبطا من ذلة فأنا الذي % % ضربت على الشرف المطل قبابي % % 13(@)(@@) % كم حاولا أمدي فطال عليهما % % أن يدركا إلا مثار ترابي % % 14(@)(@@) % عجزا ولم تقف العبيدإذا جرت % يوم الرهانمواقف الأرباب % 15(@)(@@) % و لقد حميت الشعرو هو لمعشر % رمم سوى الأسماء والألقاب % 16(@)(@@) % و ضربت عنه المدعينو إنما % % عن صورة الآداب كان ضرابي % % 17(@)(@@) % فغدت نبيط الخالدية تدعي % % شعري وترفل في حبير ثيابي % % 18(@)(@@) % أشياخ عمر الزعفران تراهم % حول الصليب حواني الأصلاب % 19(@)(@@) % نزلوا ذرمة بين غض نواظر % لم تسم مذ خلقت وذل رقاب % 20(@)(@@) % وطن المحرمة الجسوم نجاسة % في خير صحف نزلت وكتاب % PageV01P122 21(@)(@@) % من كل أشقر باحث خرطومه % % عن رزقهفتراه في إكتاب % 22(@)(@@) % خزر العيون خفية أصواتها % % تكسي الرؤوس شوائل الأذناب % 23(@)(@@) % يحمي جوانب سرحها إيرادها % % فيبيت عنها مشرع الأنياب % 24(@)(@@) % رعيت لشيخ الخالدية برهة % بل كان يرعاها على الأحقاب % 25(@)(@@) % أسعيدإنك لو بصرت بهاشم % في العمر غير مبجل الأصحاب % 26(@)(@@) % محض المذلة راكبا عكازة % % رث المعيشة شاحب الجلباب % 27(@)(@@) % لحلفت أنك لا تطيل عمامة % مصقولة العذبات والأهداب % 28(@)(@@) % نفقوا بآلات الخنا وتوهموا % % أن الزمان جرى بهم وكبا بي % % 29(@)(@@) % قوم إذا قصدوا الملوك لمطلب % نقضت عمائمهم على الأبواب % 30(@)(@@) % من كل كهل يستطير سباله % % لونين بين أنامل البواب % PageV01P123 31(@)(@@) % مفض على ذل الحجاب يرده % % دامي الجبينتجهم الحجاب % 32(@)(@@) % و مفههين تعرضا لحرابتي % % فتعرضت لهما صدور حرابي % % 33(@)(@@) % نظرا إلى شعري يروق فتربا % % منه خدود كواعب أتراب % 34(@)(@@) % شرباه فاعترفا له بعذوبة % و 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms32# لرب عذب عاد سوط عذاب % 35(@)(@@) % في غارة لم تنثلم فيها الظبا % % ضربا و لم تند القنا بخضاب % 36(@)(@@) % تركت غرائب منطقي في غربة % مسبية لا تهتدي لإياب % 37(@)(@@) % جرحى وما ضربت بحد مهند % أسرى وما حملت على الأقتاب % 38(@)(@@) % لفظ صقلت متونهفكأنه % % في مشرقات النظم در سخاب % 39(@)(@@) % و كأنما أجريت في صفحاته % % حر اللجين وخالص الزرياب % 40(@)(@@) % أغربت في تحبيرهفرواته % % في نزهة منه وفي استغراب % PageV01P124 41(@)(@@) % و قطعت فيه شبيبة لم تشتغل % عن حسنه بصبا ولا بتصابي % % 42(@)(@@) % فإذا ترقرق في الصحيفة ماؤه % % عبق النسيمفذاك ماء شبابي % % 43(@)(@@) % يصغي اللبيب له فيقسم لبه % % بين التعجب منه والإعجاب % 44(@)(@@) % جد يطير شرارهو فكاهة % تستعطف الأحباب للأحباب % 45(@)(@@) % أعزز علي بأن أرى أشلاءه % % تدمى بظفر للعدو وناب % 46(@)(@@) % أفن رماه بغارة مأفونة % باعت ظباء الروم في الأعراب % 47(@)(@@) % أأخي قد عزيتني بحسيبة % منه فعز بها ذوي الأحساب % 48(@)(@@) % عز الأكارم أنها حسب الندى % % فاضت أناملهم بغير حساب % 49(@)(@@) % هم نافسوا في حليه وبروده % % و هم أثيبوا عنه خير ثواب % 50(@)(@@) % و سقوه محتفل الحيا ريانه % % و رأوا ذنوبا سقيه بذناب % PageV01P125 51(@)(@@) % إني أحذر من يقول قصيدة % غراء خدني غارة ونهاب % 52(@)(@@) % ذئبين إذ نظرا إلى سيارة % بعثا لها يوما كيوم دؤاب % 53(@)(@@) % علجين إذ حن النواقس صرحا % % بالشوق أو حنا حنين الناب % 54(@)(@@) % شغفا بذي القربان يصدق أنه % % ينشق من نسب إليه قراب % 55(@)(@@) % و رضى عن الإنجيل يظهر فيهما % % غضبا على الفرقان والأحزاب % 56(@)(@@) % إني نبذت على السواء إليكما % % فتأهبا للفادح المنتاب % 57(@)(@@) % نصبت مجانيق الهجاءو إن رأت % لكما ضؤولة منصب ونصاب % 58(@)(@@) % و إذا نبذت إلى امرىء ميثاقه % % فليستعد لسطوتي وعقابي % % 59(@)(@@) % حاولتما جبلا كأن رعانه % % فوق السحاب الغر غر سحاب % 60(@)(@@) % فإذا أصابكما غضاب سهامها % % غيرت مدى الأيام غير غضاب % PageV01P126 61(@)(@@) % و جريتما في غرة فنكصتما % % من سوءة العقبى على الأعقاب % 62(@)(@@) % و رميتما المسك الذكي بغيبة % و ذكاؤه يربي على المغتاب % 63(@)(@@) % فلتلفحنكما سمائم منطقي % % و لتغرقنكما سيول شعابي % % 64(@)(@@) % و لتسرين مع الجنوب إليكما % % مغموسة في الشري أو في الصاب % 65(@)(@@) % و لتطلعن من الفجاج كأنها % % غرر الجياد لواحق الأقراب % 66(@)(@@) % و لأضربنكما على ما خنتما % % بصوارم 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms33# للشعر غير نوابي % % 67(@)(@@) % متواترات لا تغبكماو هل % % للصبح راعي الليل من إغباب % 68(@)(@@) % تشتق أجبال الشقيقفإن سرت % % ذات اليمين خطت غمار الزاب % 69(@)(@@) % نبل أغلغل منكما مسمومة % بمكامن الأحقاد والأطراب % 70(@)(@@) % فأريكما الدنيا به مغبرة % حتى يظن اليوم يوم ضباب % PageV01P127 71(@)(@@) % فلتعلماإن لم تهب عليكما % % أبدا نسيم جنايتي وجنابي % % 72(@)(@@) % و ليحذر الكذاب تربكما يدا % باتت تحن إلى طلى الكذاب % 73(@)(@@) % فلكم عدو قد أطلت عذابه % % بكلوم ريقة الكلام عذاب % 74(@)(@@) % وشيتها قبل الحتوف كما ارتدى % % بالوشي ظهر الحية المنساب % 75(@)(@@) % لولا أبو الخطاب طال تنكري % % للخطب يظلمنيو ساء خطابي % % 76(@)(@@) % و هبت شمائله الجزيلو أبرأت % يمناه من ندب الزمان إهابي % % 77(@)(@@) % و كفاك أن الدهر أعتبني به % % فكفيت عتبي عنده وعتابي % % PageV01P128 البحر : - 1(@)(@@) % ألا غادها مخطئا أو مصيبا % و سر نحوها داعيا أو مجيبا % % 2(@)(@@) % و خذ لهبا حره في غد % إذا الحر قارن يوما لهيبا % % 3(@)(@@) % دعانا الخريف إلى موطن % يفوق المواطن حسنا وطيبا % % 4(@)(@@) % و قد جمع الحسن في روضة % و فرق دجلة فيه شعوبا % % 5(@)(@@) % و مطرب وشي أبراده % % يضاحك وشي النجاد القشيبا % % 6(@)(@@) % نشيده إن نزلنا ضحى % و نهدمه إن رحلنا الغروبا % % 7(@)(@@) % كأنا ارتبطنا به نافرا % من الخيل يفرق شخصا مهيبا % % 8(@)(@@) % فبتناو بات نسيم الصبا % % يدرج في جانبيه الكتيبا % % 9(@)(@@) % يكاد على ضعف أنفاسه % % يطير على الشرب تلك الشروبا % % 10(@)(@@) % و قد حجب الأرض ريحاننا % % فلم يبق للعين منها نصيبا % % PageV01P129 11(@)(@@) % كأنا على صفحتي لجة % تلاقي الشمال عليها الجنوبا % % 12(@)(@@) % فمن طرب يستفز النهى ؛ % و من أدب يسترق القلوبا % % 13(@)(@@) % و ساق يقابل إبريقه % % كما قابل الظبي ظبيا ربيبا % % 14(@)(@@) % يطوف علينا بشمسية % يروع بها الشمسحتى تغيبا % % 15(@)(@@) % و ينشر صيادنا حولنا % % لبابا من الصيد يرضي اللبيبا % % 16(@)(@@) % سبابيط تخبر أجسامها % % بأن قد رعين جنابا خصيبا % % 17(@)(@@) % نواعم لو أنها باشرت % هواء لأحدث فيها ندوبا % % 18(@)(@@) % فلولا الدروع التي قدرت % % لأبدانها أوشكت أن تذوبا % % 19(@)(@@) % و تبعث للبر وحشية % تسوق إلى الوحش يوما عصيبا % 20(@)(@@) % مؤدبة يرتضى فعلها % % و لم نر ليثا سواها أديبا % % PageV01P130 21(@)(@@) % و تركية الوجه تبدي لنا % % إخاء فصيحا ووجها جليبا % % 22(@)(@@) % تعانق إن وثبت صيدها % % عناق المحب يلاقي حبيبا % % 23(@)(@@) % طرادا صحيحا 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms34# وخلفا صبيحا % و وثبا مليحا وأمرا عجيبا % % 24(@)(@@) % فقد ملكت ود أربابها % % فكل يخاف عليها شعوبا % % 25(@)(@@) % و للماء من حولنا ضجة % إن الماء كافح تلك العروبا % % 26(@)(@@) % جبال تؤلفها حكمة % فتحبو البحار بها لا السهوبا % % 27(@)(@@) % تقابلنا في قميص الدجى % % إذا الأفق أصبح منه سليبا % % 28(@)(@@) % حيازيمها الدهر منصوبة % تعانق للماء وفدا غريبا % % 29(@)(@@) % عجبت لها شاحبات الخدود % لم يذهب السري عنها الشحوبا % % 30(@)(@@) % إذا ما هممنا بغشيانها % % ركبنا لها ولدا أو نسيبا % % PageV01P131 31(@)(@@) % تغني السكور لنا بينها % % غناء تشق عليه الجيوبا % % 32(@)(@@) % يجاورها كل ساع يرى % % و إن جد في السيرمنها قريبا % % 33(@)(@@) % خلي الفؤادو لكنه % % يحن فيشجي الفؤاد الطروبا % % 34(@)(@@) % فيا حبذا الدير من منزل % هصرنا به العيش غضا رطيبا % % 35(@)(@@) % إذا ما استحمنا به نزهة % حمتنا بدائعه أن نخيبا % % PageV01P132 البحر : - 1(@)(@@) % أجزار باب الشام كيف وجدتني % % و أنت جزور بين نابي ومخلبي % % 2(@)(@@) % أراك انتهبت الشعر ثم خبأته % عن الناس فعل الخائف المترقب % 3(@)(@@) % تباعدت عن باقورة الشعر بالمدى % % إليهفلم تخرج ولم تتحوب % 4(@)(@@) % و لما جرى الحذاق في ضوء صبحه % تعثرت منه في ضبابة غيهب % 5(@)(@@) % جريت من الإيجاز أقرب مسلك % و من ذهب الألفاظ أحسن مذهب % 6(@)(@@) % و تزعم أن الشعر عندك أعربت % محاسنه عن ناطق منك معرب % 7(@)(@@) % فما بال شعر الناس ملء عيوننا % % و شعرك في الأشعار عنقاء مغرب % PageV01P133 البحر : - 1(@)(@@) % سل الملحي كيف رأى عقابي % % و كيفو قد أبى رأي الصواب % 2(@)(@@) % رقاني الهاشمي فسل ضغني % % و أغمد عنه نائبتي ونابي % % 3(@)(@@) % و قال أخو المودة والتصابي % % و عون أخي الصبابة والتصابي % % 4(@)(@@) % و شيخا طاب أخلاقا فأضحى % % أحب إلى الشباب من الشباب % 5(@)(@@) % له دار إذا استخفيت فيها % % خفيت فلم تنلك يد الطلاب % 6(@)(@@) % طرقناه وقنديل الثريا % % يحطو فارس الظلماء كابي % % 7(@)(@@) % فرحب واستمال وقالحطت % رحالكم بأفنية رحاب % 8(@)(@@) % و حض على المناهدة الندامى % % بألفاظ مهذبة عذاب % 9(@)(@@) % و قال تيمموا الأبواب منها % % فكل جاء من تلقاء باب % 10(@)(@@) % فهذا قالريحان ونقل % و ثلج مثل رقرقة السراب % PageV01P134 11(@)(@@) % و هذا قالقدر من طعام ؛ % و هذا قال دن من شراب % 12(@)(@@) % و سمح القوم من سمحت يداه % % بخد غريرة بكر كعاب % 13(@)(@@) % فتم 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms35# لهم بذلك يوم لهو % غريب الحسن عذب مستطاب % 14(@)(@@) % إذا العبء الثقيل توزعته % رقاب القوم خف على الرقاب % PageV01P135 البحر : - 1(@)(@@) % مدحت أبا جعفر % و قلت شريف العرب % 2(@)(@@) % فأسلمني بخله % إلى خيبة المنقلب % 3(@)(@@) % و أبدى على بابه % تجمل أهل الأدب % 4(@)(@@) % إذا قلت قد جاد لي % % يقول قميصي كذب % PageV01P136 البحر : - 1(@)(@@) % جد لي بها للشرخ من نشابها % % لم تشرب السن قوى شرابها % % 2(@)(@@) % فهي خلاف الراحو انتسابها % % في قدم العمر إلى أحقابها % % 3(@)(@@) % دخينة والثلج من ترابها % % خضر جرى الإفرند في أثوابها % % 4(@)(@@) % فاسودت الأطواق في رقابها % % تفوح ريا المسك في قرابها % % 5(@)(@@) % و مسكها الفائح من شرابها % % إذا السيوف انحرن عن أثوابها % % 6(@)(@@) % حيث صريع الراحأو يحيا بها % % و أعقبته البر من عقابها % % 7(@)(@@) % فهي شفاء النفس من أوصابها % % و كربة المخمور والتهابها % % 8(@)(@@) % يغنى بها الساقي الذي يعنى بها % % وحجبها في الظل من حجابها % % 9(@)(@@) % وعقد الآس على قبابها % % و صانها عن ذامها وعابها % % 10(@)(@@) % و قام يجلوها على خطابها % % كأنما في الرحب من رحابها % % PageV01P137 11(@)(@@) % لطائما تنفح في عيابها % % فالصائم القائم من أصحابها % % 12(@)(@@) % و شارب الخمرة من شرابها % % PageV01P138 البحر : - 1(@)(@@) % عوجا على ذاك الكثيب من كثب % فكم لنا في ربوتيه من أرب % 2(@)(@@) % ما عن للعين به سرب مها % % إلا جرى من جفنها دمع سرب % 3(@)(@@) % سرن فقد عوض قلبي طربا % للحزن من فرط السرور والطرب % 4(@)(@@) % و احتجبت في كلل الرقم دمى % % تأنق أثناء الحجال والحجب % 5(@)(@@) % جدن بأجياد تحليها النوى % % فرائدا من دمع عين منسكب % 6(@)(@@) % صواعد الأنفاس أبقت نفسا % في صعد منا ودمعا في حبب % 7(@)(@@) % و مخطف يهتز من ماء الصبا % % كأنما يهتز عن ماء العنب % 8(@)(@@) % قام وسوق اللهو قد قام به % % ينخب أقداح الندامى بالنخب % 9(@)(@@) % و يمزج الكأس بعذب ريقه % % حتى تبدى الصبح مبيض العذب % 10(@)(@@) % وجدي به وجد الأمير أحمد % بجمع حمد أو بتقريق نشب % PageV01P139 11(@)(@@) % أغر رد الجود وعدا صادقا % من بعد ما كان غرورا وكذب % 12(@)(@@) % يستمطر البيض دما و تارة % يمطر راجيه ذهابا من ذهب % % 13(@)(@@) % كالعارض انهل رواء ديمة % و برقه بادي الحريق ملتهب % 14(@)(@@) % مغرى بسمر الخط لا سمر المها % % بأسا و بيض 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms36# الهند لا بيض العرب % 15(@)(@@) % يريه أعلى الرأي حزم كامن % فيه كمون الموت في حد القضب % 16(@)(@@) % حسب بني حمدان مجدا أنهم % % أبناء محمود السماح والحسب % 17(@)(@@) % أسد إذا ما سلبت أسد الوغى % % أنفسهاعاقت نفيسات السلب % 18(@)(@@) % كم حاسد رحب الفناء ضيقت % عليه أسياف الأمير ما رحب % 19(@)(@@) % و حامد يسحب ذيل نعمة % أعم من ذيل السحاب المنسحب % 20(@)(@@) % حن إلى أرض العراق فامتطى % % مطية تسبح في اللج اللجب % PageV01P140 21(@)(@@) % ناحية ترجو النجاة تارة % بسيرهاو تارة تخشى العطب % 22(@)(@@) % إذا المطايا قومت رؤوسها % % لتهتدي قوم هاديها الذنب % 23(@)(@@) % ركائب إن عرست لم تسترح % و إن سرت لم تشك إفراط التعب % % 24(@)(@@) % كأنما في الماء ظمآن فلا % % ينقع رقراق السراب المنسرب % % 25(@)(@@) % كأنما نحل منها أوطنا % و نحن للسير الحثيث في دأب % % 26(@)(@@) % و لم يزر بغداد حتى إنها % % بحر ندى يحيا به روض الأدب % % 27(@)(@@) % كأننالما بدت رباعها % % أسرى أحسوا بفكاك مقترب % % 28(@)(@@) % عدنا بمبيض الصلات في الرضا % % منه ومحمر الظباة في الغضب % % 29(@)(@@) % أثرى من المجدفأبقى سعيه % % مآثرا تبقى على مر الحقب % % 30(@)(@@) % فراح راجيهو قد نال المنى % % بنائل فلل أنياب النوب % % PageV01P141 31(@)(@@) % و راح من وشي الثناء كاسيا % يخطر في أثناء أبراد قشب % % PageV01P142 البحر : - 1(@)(@@) % يعنفني أن أن أطلت النحيبا % % و أسكب للبين دمعا سكوبا % % 2(@)(@@) % و أدنى المحبين من نحبه % % محب بكى يوم بين حبيبا % % 3(@)(@@) % دعا دمعه ودعت دمعها % % فبلل منها ومنه الجيوبا % % 4(@)(@@) % فتاة رمته بسهم الجفون % و مدت إليه بنانا خضيبا % % 5(@)(@@) % فعاين منهم غزالا ربيبا % و بدرا منيرا و غصنا رطيبا % % 6(@)(@@) % و عهدي بها لا تديم الصدود % و لا تتجنى علي الذنوبا % % 7(@)(@@) % ليالي لا وصلنا خلسة % نراقب للخوف فيها الرقيبا % % 8(@)(@@) % و لا برق لذاتنا خلب % إذا ما دعونا لوصل قلوبا % % 9(@)(@@) % و كم لي وللبين من موقف % يميت بلحظ العيون القلوبا % % 10(@)(@@) % إذا شهر اللحظ أسيافه % تدرعت للصبر بردا قشيبا % % PageV01P143 11(@)(@@) % كأني في هبوتيه ابن فهد % إذا اليوم أصبح يوما عصيبا % % 12(@)(@@) % فتى يستقل جزيل الثواب % سماحا لمن جاءه مستثيبا % % 13(@)(@@) % و يربي على سنن المكرمات % فيظهر فيهن مجدا غريبا % % 14(@)(@@) % و تلقاه مبتسما واضحا % إذا ما الحوادث أبدت قطوبا % % 15(@)(@@) % كريم 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms37# إذا خاب راجي الندى % % حمتنا مكارمه أن نخيبا % % 16(@)(@@) % رأى لحظه ما تجن الصدور % فخلناه يعلم منها الغيوبا % % 17(@)(@@) % بعيد إذا رمت إدراكه % و إن كان في الجود سهلا قريبا % % 18(@)(@@) % نمته من الأزد صيد الملوك % و ما زال ينمي النجيب النجيبا % % 19(@)(@@) % سلمت سلامة للمكرمات % و ما زلت تبسط باعا رحيبا % % 20(@)(@@) % تزف إليك تجار المديح % عذارى تروقك حسنا وطيبا % % PageV01P144 21(@)(@@) % فكم لك من سؤدد كالعبير % أصاب من المدح ريحا جنوبا % % 22(@)(@@) % و رأي يكشف ليل الخطوب % ضياءإذا الخطب أعيا اللبيبا % % 23(@)(@@) % و مشتمل بنجاد الحسام % يفل شبا الحرب بأسا مهيبا % % 24(@)(@@) % ملأت جوانحه رهبة % فأطرقو القلب يبدي وجيبا % % 25(@)(@@) % كسوت المكارم ثوب الشباب % و قد كن ألبسن فينا المشيبا % % 26(@)(@@) % ضرائب أبدعتها في السماح % فلسنا نرى لك فيها ضريبا % % 27(@)(@@) % تخلصتني من يد النائبات % و أحللتني منك ربعا خصيبا % % 28(@)(@@) % و ملكت مدحي كما ملكت % بنو هاشم بردها والقضيبا % % 29(@)(@@) % و أنى لوارد بحر القريض % إذا ورد المادحون القليبا % % 30(@)(@@) % و لست كمن يسترد المديح % إذا ما كساه الكريم المثيبا % % PageV01P145 31(@)(@@) % يحلي بمدحته غيره % % فيمسي محلى ويضحي سليبا % % PageV01P146 البحر : - 1(@)(@@) % أرى همة تختال بين الكواكب % و طودا من العلياء صعب الجوانب % 2(@)(@@) % و مربض آساد ومعدن سؤدد % و موئل مطلوب وغاية طالب % 3(@)(@@) % علا ملكت لب الأميرو إنما % % تملك ألباب الكرام المناجب % 4(@)(@@) % تروح به بين الصوارم والقنا % % و تغدو به بين اللهى والمواهب % 5(@)(@@) % فتى طالبي الدين أصبح جوده % % يحسن للطلاب وجه المطالب % 6(@)(@@) % تساهم فيه العرب والعجمفاحتوى % % على المجد من أقيالها والمرازب % 7(@)(@@) % و كم ومضت أسيافه بمشارق % فراع العدا إيماضها بمغارب % 8(@)(@@) % حبيت على رغم الحسود بجنة % حبتك بأنواع الثمار الأطايب % 9(@)(@@) % تعجلت منها ما يعجل مثله % % لكل جميل السعي عف المذاهب % 10(@)(@@) % ميادين ريحان كأن نسيمه % % نسيم الهوى أيام وصل الحبائب % PageV01P147 11(@)(@@) % كأن سواقيه سلاسل فضة % إذا اطردت بين الصبا والجنائب % 12(@)(@@) % و روض إذا ما راضه الغيثأنشأت % حدائقه وشيا كوشي السبائب % 13(@)(@@) % و حالية الأجياد من ثمراتها % % مفلكة الأجسام خضر الذوائب % 14(@)(@@) % خرقن الثرى عن مائه الغمرفارتوت % أسافلها من زاخر غير ناضب % 15(@)(@@) % إذا ما سقتهن السحائب شربة % خلطن بماء البحر ماء السحائب % 16(@)(@@) % تقل 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms38# شماريخ الثمار كأنها % % إذا طلعت حمرا أكف الكواعب % 17(@)(@@) % و جاعلة در السحاب مدامة % إذا شربت در السحاب الصوائب % 18(@)(@@) % لها كالىء يذكي اللحاظ خلالها % % حذارا عليها من سخاط النوائب % 19(@)(@@) % يرد إليها حية الماء ما انكفت % عن القصد أو صدت صدود المجانب % 20(@)(@@) % فقد لبست خضر الغلائلو انثنت % % لها مرجحنات بخضر الشوارب % PageV01P148 21(@)(@@) % قطوف تساوى شربهاو تباينت % % تباين مسود العذار وشائب % 22(@)(@@) % فمن برد لم يجل للشمس حاجبا % من الظل إلا غازلته بحاجب % 23(@)(@@) % و من سبج أجرت به الكرم سلكها % % و لم تجر في منظومه خرق ثاقب % 24(@)(@@) % بدائع أضحت في المذاق أقاربا % و إن كن في الألوان غير أقارب % 25(@)(@@) % ترى الماء شتى السبل ينساب بينها % % كما ريعت الحيات من كل جانب % 26(@)(@@) % و مسترفد تيار دجلة رافدا % سواحلها من نازح ومقارب % 27(@)(@@) % يسير وإن لم يبرحالدهر خطوة % فليس بوقاف و ليس بسارب % 28(@)(@@) % مواصل إيجاف تكاد تجيبه % % إذا حن ليلا موجفات الركائب % 29(@)(@@) % تسيل خلال الروض من فيض دمعه % % قواضب تزري بالسيوف القواضب % 30(@)(@@) % و ممتنع جلبابه الغيم في الضحى % % و حليته في الليل زهر الكواكب % PageV01P149 31(@)(@@) % أضاءفلو أن النجوم تحيرت % ضلالا هداها سبلها في الغياهب % 32(@)(@@) % له شرفات كالوذائل أشرفت % على نازح الأقطار نائي المناكب % 33(@)(@@) % إذا لبست ورس الأصيل حسبتها % % تعل برقراق من التبر ذائب % 34(@)(@@) % مجاور بر ضاحك النور معشب % و بحر طموح الموج عذب المشارب % 35(@)(@@) % إذا بكر القناص فيه وأعزبت % حبائله في صيد تلك العوازب % 36(@)(@@) % رأيت بنات البحر موشية القرى % % بهو بنات البر بيض الترائب % 37(@)(@@) % محاسن أرزاق من النورو المها % % يغذ إليها طالب غير خائب % 38(@)(@@) % فمن سانح بالخير في إثر سابح % و مختضب الأطراف من دم خاضب % 39(@)(@@) % و آمنة لا الوحش يزعر سربها % % و لا الطير منها داميات المخالب % 40(@)(@@) % هي الروض لم تنش الخوامل زهره % % و لا خضل عن دمع من المزن ساكب % PageV01P150 41(@)(@@) % إذا انبعثت بين الخمائل خلتها % % زرابي كسرى بثها في الملاعب % 42(@)(@@) % و إن عمن في طامي المياه تبسمت % غرائبها ما بين تلك الغرائب % 43(@)(@@) % و دهم إذا ما الليل رفع سجفه % % تكشف منها عن وجوه شواحب % 44(@)(@@) % و إن آنست 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms39# شخصا من الإنس صرصرت % كما صرصرت في الطرس أقلام كاتب % 45(@)(@@) % جبال رست في لجة غير أنها % % تحاذر أنفاس الرياح اللواعب % 46(@)(@@) % إذا عاينت للماء وفدا رأيتها % % تودع منه غائبا غير آيب % 47(@)(@@) % يسير إليها الركب في لج زاخر % و ليس سوى أولادها من مراكب % 48(@)(@@) % تضم رجالا أغرب الشيب فيهم % فمال على أجفانهم والحواجب % 49(@)(@@) % فمن رهج لا يستثار بحافر % لديهمو خيل لا تذل لراكب % 50(@)(@@) % عجائب ملك في فنائل لم تكن % عجائب ملك قبلها بعجائب % PageV01P151 51(@)(@@) % هي الحرم المحمي ممن يرومه % % بكل صقيل المتن عضب المضارب % 52(@)(@@) % مواطن لم يسحب بها الغي ذيله % % وكم للعوالي بينها من مساحب % 53(@)(@@) % أبا حسن لا زال ودك مشربي % % إذا بعدت يوما علي مشاربي % % 54(@)(@@) % نهنيك بالبرء الذي قام فعله % % مقام الضحى والحندس المتراكب % 55(@)(@@) % أعاد رياض الحمد مونقة الربا % % و رد رياح الجود ريا المشارب % 56(@)(@@) % فصدق من ظن الصديقو أكذبت % مواقعه ظن العدو المحارب % 57(@)(@@) % إذا كنت من صرف الحوادث معتبي % % فلست عليها ما حييت بعاتب % 58(@)(@@) % إليك القوافي الغر لا نظم سارق % و لا فكر مأفوك و لا لفظ حاطب % 59(@)(@@) % كتائب حمد لو رميت بها العدا % % غداة الوغى قامت مقام الكتائب % PageV01P152 البحر : - 1(@)(@@) % طلعت شموس الخدر كيما تغربا % % و بدت محاسنها لكي تتغيبا % % 2(@)(@@) % فكفاه أن يصف الصبابة ناطقا % دمع إذا وصف الصبابة أطنبا % % 3(@)(@@) % يا حبذا شمس جلت عنها النوى % % فجلت على الصب الشنيب الأشنبا % % 4(@)(@@) % و تعمدته بلحظة لو أنها % % سهم لجاز عن الشغاف مخضبا % % 5(@)(@@) % قامت تميل للعناق مقوما % كالخوط أبدع في الثمار وأغربا % % 6(@)(@@) % حملت ذراه الأقحوان مفضضا % يسقي المدامة والشقيق مذهبا % % 7(@)(@@) % و أبت وقد أخذ النقاب جمالها % % حركات غصن البان أن تتنقبا % % 8(@)(@@) % ما كنت إلا البدر فارق حجبه % % حتى إذا شمناه عاد مججبا % % 9(@)(@@) % فغدوت لا أدري أكان له الحمى % % لما تغيب مشرقا أو مغربا % % 10(@)(@@) % فإذا الحيا أعطى الرياح قياده % % فانقاد تجنبه الجنوب أو الصبا % % PageV01P153 11(@)(@@) % فسقى محلا بالعقيق وخلة % و ربى بأطراف الغميم وربربا % % 12(@)(@@) % ما لي رأيت الدهر وكل صرفه % % بالقلبي الشهم كيف تقلبا % % 13(@)(@@) % ساويت جدا في مخيلة لاعب % و الندب ليس يجد حتى يلعبا 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms40# % % 14(@)(@@) % و معرض لي بالطراد خسأته % % و متى رأيت الليث طارد ثعلبا % % 15(@)(@@) % فليثو في رمس الخمولفإنني % % نار تضرم في ذؤابة كبكبا % % 16(@)(@@) % هيهات جانبت السفاه وأهله % % حدثا فكيف أرى السفاهة أشيبا % % 17(@)(@@) % و أحلني عز الأمير محلة % لو رامني فيها الزمان تهيبا % % 18(@)(@@) % عدنا بمبيض الصنائع راضيا % منهو محمر العوامل مغضبا % % 19(@)(@@) % غمر المواهب لا يساجل مرغبا % في المكرمات ولا يطاول مرهبا % % 20(@)(@@) % و ممنع يردي العدو إذا ارتدى % % بالسيف أو يحبو الولي إذا احتبا % % PageV01P154 21(@)(@@) % و أغر لو نطقت رحاب محله % % قالت لطلاب المكارممرحبا % % 22(@)(@@) % ناضلت منه بذي السداد فما هفا % % و ضربت منه بذي الفقارفما نبا % % 23(@)(@@) % و صحبت أيام المشيب بجوده % % مبيضةفذممت أيام الصبا % % 24(@)(@@) % بشر كمصباح الحيا وخلائق % تخبو لبهجتها مصابيح الربا % % 25(@)(@@) % و مناسب حاز الفضيلة أعجما % فيناكما حاز الفضيلة معربا % % 26(@)(@@) % إن شاء عد من الشعوب أجلها % % أو شاء عد من القبائل تغلبا % % 27(@)(@@) % يرتاح ما غنى الحديد إلى الوغى % % فيخوض موجا منه أكدر مجلبا % % 28(@)(@@) % و يكر مطرود السنان كأنه % % قمر يطارد في العجاجة كوكبا % % 29(@)(@@) % أأشيم بارقة الغمامو قد غدت % يمنى أبي الحسن الغمام الصيبا % % 30(@)(@@) % قاظ الزمان فكنت ظلا سجسجا % و نأى الربيع فكنت روضا معشبا % % PageV01P155 31(@)(@@) % ترك القصائد قصرت عن عد ما % % يسديو من يحصي الحصى والأثلبا % % 32(@)(@@) % و الطالبيون انتحتك وفودهم % % فرأوا نداك الغمر قرب مطلبا % % 33(@)(@@) % لاحظتهمو الفكر يصرف عنهم % % لحظ النواظر بغضة وتجنبا % % 34(@)(@@) % فنظمتهم جمعا وقد نشرتهم % أيدي الزمان ففرقوا أيدي سبا % % 35(@)(@@) % أحببت ذا القربى و ليس يحبه % % إلا امرؤ رفض الغريب الأجنبا % % 36(@)(@@) % أما الصيام فقد أجبت دعاءه % و رأيته فعلا أغر مهذبا % % 37(@)(@@) % شهر وصلت صيامه بقيامه % % فنضوته نضو الجوانح متعبا % % 38(@)(@@) % فأجب دعاء الفطر مصطبحا فقد % ناداك حي على الصباح فثوبا % % 39(@)(@@) % و تملها بكرا فلست مزوجا % شرف الشريف من المدائح ثيبا % % 40(@)(@@) % حمدا أمر الفكر سلك نظامه % % فأصاب درا من علاك مثقبا % % PageV01P156 41(@)(@@) % إن حل أوطن في صدور رواته % % أو سار شرق في البلاد وغربا % % PageV01P157 البحر : - 1(@)(@@) % من لي برد سوالف الأحقاب % و مآرب أعيت على الطلاب % 2(@)(@@) % أتبعتها نفس المحب تضرمت % أحشاؤه لتفرق الأحباب % % 3(@)(@@) % أتبعتها نظر المشوق تجمعت % زفراته 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms41# لتفرق الأتراب % 4(@)(@@) % إن الظباء حمت مراتعها الظبا % % ورعت سوائمها أسود الغاب % 5(@)(@@) % من كل سكرى اللحظ أثمر غصنها % % نوعين من ورد ومن عناب % 6(@)(@@) % ريا أخاضتنا على ظمأ الهوى % % من وعدها الممطول لمع سراب % 7(@)(@@) % لله أعرابية غدرت بنا ؛ % إن النفاق سجية الأعراب % 8(@)(@@) % حجبت محاسنها الخيامو لو بدت % كان العفاف لها أتم حجاب % 9(@)(@@) % و أحلها من قلب عاشقها الهوى % % بيتا بلا عمد و لا أطناب % 10(@)(@@) % هيهات ما صدرت عقود نسيبه % % عن لوعة كمنتو لا أوصاب % PageV01P158 11(@)(@@) % لكنها فكر إذا ما سومرت % باتت تفتح زهرة الآداب % 12(@)(@@) % يهنى العواذل أنه هجر الصبا % % أنف الشباب معذل الأصحاب % 13(@)(@@) % لحظ الكواعب سرهفوجدته % % عف السريرة طاهر الأثواب % 14(@)(@@) % كم قلن لما قام في محرابه % % سيان أنت ودمية المحراب % 15(@)(@@) % يا حسن ما خلعت على أعطافه % % أيدي الصبا أو زانه بتصابي % % 16(@)(@@) % إن الوعيد ثناه عن آرائه % % حتى تجنب مونق الآداب % 17(@)(@@) % الآن قصرت النوائبفاغتدت % بندى الأمير كليلة الأنياب % 18(@)(@@) % سفرت لنا من رأيه وحسامه % % عن ضوء صبح مسفر وشهاب % 19(@)(@@) % ملك عقود الحمد ملء يمينه % % و نداه ملء حقائب الطلاب % 20(@)(@@) % شفع الندى لعفاتهبندىكما % % شفع الربيع سحابة بسحاب % PageV01P159 21(@)(@@) % و عفافرد البيض في أغمادها % % و سطا فعل متونها بخضاب % 22(@)(@@) % و جرى فبين مقصر عن شأوه % % متخلف عنه وآخر كاب % % 23(@)(@@) % شيدت مجدك فاعملي بمهذب % بين القبائل والشعوب لباب % 24(@)(@@) % و نصبت نفسك للنبي وآله % % حتى سقيتهم من الطلاب % 25(@)(@@) % فأعز نصرك منهم باقي الهدى % % و أذل عنه بقية الأحزاب % 26(@)(@@) % نزلوا فناك مخضبين أعزة % ما بين رحب خلائق ورحاب % 27(@)(@@) % فكأنما حلوا بيثرب منهأو % % نزلوا بمكة في ربا وهضاب % 28(@)(@@) % فاسلم أبا حسن ليوم مكارم % وطف سحائبها ويوم عقاب % 29(@)(@@) % لم تنض أثواب الصيام مودعا % حتى كساك الفطر ثوب ثواب % 30(@)(@@) % فاسعد بعيد عاد كوكب سعده % طلق الضياء مؤكد الأسباب % PageV01P160 31(@)(@@) % و تحلها نظم اللسانو إنما % % نظم اللسان فرائد الألباب % 32(@)(@@) % لو صافحت سمع الوليد جفا لها % % أرسوم دار أم سطور كتاب % 33(@)(@@) % بل لو تأملها ابن أوس لم يقل % لو أن دهرا رد رجع جوابي % % PageV01P161 البحر : - 1(@)(@@) % لنا من الدهر خصم لا نغالبه % % فما على الدهر إن ولت نوائبه 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms42# % % 2(@)(@@) % يرتد عنه جريحا من يسالمه % % فكيف يسلم منه من يحاربه % % 3(@)(@@) % و لو أمنت الذي تجني أراقمه % % علي هان الذي تجني عقاربه % % 4(@)(@@) % تظلم الشعر من ليث يساوره % % إذا تبرجأوصل يواثبه % % 5(@)(@@) % و حجبت دون رائيها بدائعه ؛ % و قيدت دون مسراها غرائبه % % 6(@)(@@) % و كيف لا يتحامى سفرها سننا % أمسى به أسد ضار نوائبه % % 7(@)(@@) % يا غيبة الكرم المفقود غائبه % % و خيبة الأدب المجفو صاحبه % % 8(@)(@@) % أتستباح على قسر محارمه % % و تسترق على صغر كواعبه % % 9(@)(@@) % أبعد ما انهد عمري في محاسنه % % حتى وهى بحلول الشيب جائبه % % 10(@)(@@) % و رقرق الطبع فيه ماء رونقه % فجاء كالوشي مصقولا سبائبه % % PageV01P162 11(@)(@@) % و كان كالثمر استقصيت غايته % % خبرا فما بيدي إلا أطايبه % % 12(@)(@@) % ضرب من السحر أجلوه على نفر % سيان قائله فيهم وجالبه % % 13(@)(@@) % تضيء مثل سطور البرق أسطره % % كأنما ذهب القرطاس كاتبه % % 14(@)(@@) % تدنست بيدي غيري مطارفه % % و سودت بسوى قومي مناسبه % % 15(@)(@@) % وشي إذا نمنمت منه خواطرنا % % بردا فلا بد من كف تجاذبه % % 16(@)(@@) % نهب فلو حضرته النار مضرمة % جرى إليه يخوض النار ناهبه % % 17(@)(@@) % بل لو تعلق بالجوزاء هاربه % % ما فات خطف أبي عثمان هاربه % % 18(@)(@@) % سبى و أبقت بوادي سبيه لمحا % معشوقة إن عفت عنها عواقبه % % 19(@)(@@) % إذا الكمي تحامى بعض ما ملكت % رماحه من خطير فهو واهبه % % 20(@)(@@) % له على سرج شعري غارة أبدا % يرتاع معقوله منها وساربه % % PageV01P163 21(@)(@@) % فلا السنان لها دام و قد برقت % فتكا و لا السيف مخضوبا مضاربه % % 22(@)(@@) % إذا تخطف من أولادنا ولدا % قامت بمثل قوافيه نوادبه % % 23(@)(@@) % إليكم عن شهاب طار طائره % قدما يعري أديم الجو ثاقبه % % 24(@)(@@) % فنكبوا عن طريق السيل تمتنعوا % % من قبل أن تتهاداكم غواربه % % 25(@)(@@) % فلست أهدي إلى قوم سمائحه % % من بعد ما قسمت فيهم جنائبه % % 26(@)(@@) % و لا تمدوا إلى العيوق أيديكم % % جهلا فلن يدرك العيوق طالبه % % 27(@)(@@) % هل للغنيين عذر في اغتصابهما % % حليا يبوء بأوفى اللعن غاصبه % % 28(@)(@@) % قل للوزير تحرج إنه سلب % غشما تعدى على المسلوب سالبه % % 29(@)(@@) % لا يبعد الله درا حلياك به % % فكم فتى عطلت منه ترائبه % % 30(@)(@@) % و مركبا يتحرى الصدق مادحه % % حسنا كما يتحرى الإفك عائبه % % PageV01P164 31(@)(@@) % مدفعا بأكف الظلم 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms43# رائضه % منكبا برماح الجود راكبه % % 32(@)(@@) % أضحى ابن فهد حريبا من محاسنه % % من بعد ما بذلت فيها حرائبه % % 33(@)(@@) % و أنت لا شك من أفواف يمنته % % عار كما عريت منها مناكبه % % 34(@)(@@) % و كيف تسحب وشيا قد تداوله % % قوم سواك فقد رثت مساحبه % % 35(@)(@@) % تبرجت فيهم قدما عرايسه % % و أشرقت فيهم دهرا كواكبه % % 36(@)(@@) % لا يعجبنك دينار المديحو لم % % يضربه باسمك دون الناس ضاربه % % 37(@)(@@) % فخير صيدك ما حلت مصايده ؛ % و خير مالك ما طابت مكاسبه % % 38(@)(@@) % و إن أصخت لتغريد المديحفقد % % وافى مغردهو انحط ناعبه % % PageV01P165 البحر : - 1(@)(@@) % على غير عتب ما طويت عتابها % % و آثرت من بعد الوصال احتسابها % % 2(@)(@@) % وقفنا فظل الشوق يسأل دارها % % و تجعل أسراب الدموع جوابها % % 3(@)(@@) % فلا برحت ريح الجنوب حفية % تخص بألطاف السحاب جنابها % % 4(@)(@@) % لوامع برق لا تمس أراكها % % و أنفاس ريح لا تروع ترابها % % 5(@)(@@) % و مجدولة جدل العنان منحتها % % عناني فأضحت رحلة الهجر دابها % % 6(@)(@@) % إذا برزت كان العفاف حجابها % % و إن سفرت كان الحياء نقابها % % 7(@)(@@) % و من دونها نيل الغمامإذا سرت % نجوم القنا الخطي تزجي قبابها % % 8(@)(@@) % حمتنا اللياليبعد ساكنة الحمى % % مشارب يهوى كل طام شرابها % % 9(@)(@@) % ألاحظها لحظ الطريد محله % % و أذكرها ذكر البغي شبابها % % 10(@)(@@) % و أنشدهاو القرب بيني وبينها % % و لو آب حلمي ما رجوت إيابها % % PageV01P166 11(@)(@@) % تخيرت أفواف المديحفلم أنخ % بباب بني العباس إلا لبابها % % 12(@)(@@) % قواف لو أن الأخيلية عاينت % محاسنها زانت بهن سخابها % % 13(@)(@@) % أغريداه مزنة مستهلة % إذا شام راج بالشآم سحابها % % 14(@)(@@) % و لو لم يثبها الهاشمي لأصبحت % مآثره اللاتي حوين ثوابها % % 15(@)(@@) % يعد الجبال من قريش أبوة % إذا عد ذو فخر سواها هضابها % % 16(@)(@@) % إذا انتسبت بين الخلائق ألحقت % أواصرها بالمصطفى وانتسابها % % 17(@)(@@) % و إن حملت سمر الرماح لمشهد % رأيت أسود الغاب تحمل غابها % % 18(@)(@@) % و سالت بهم تلك البطاح كأنما % % أسالوا عليها بالحديد سرابها % % 19(@)(@@) % بهم عرفت زرق الأسنة ريها % % كما عرفت بيض السيوف خضابها % % 20(@)(@@) % أبا أحمد أصبحت شمس مكارم % تضيءو مصباح العلى وشهابها % % PageV01P167 21(@)(@@) % أبوك الذي سقى الحجيجو لم يزل % بمكة يروي ركبها وركابها % % 22(@)(@@) % و لما أقام المحل بين بيوتهم % % دعا الله فيه دعوةفأجابها % % 23(@)(@@) % و 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms44# لم يثن طرف العين حتى تهللت % مدامع مزن لا تمل انسكابها % % 24(@)(@@) % فأعتبت الأرض السماء بجاهه % غداة تولى عن قريش عتابها % % 25(@)(@@) % بني هاشم أعطاكم الحق رتبة % يقصر عنها من يريد اغتصابها % % 26(@)(@@) % فأشرق منها في القلوب ضياؤكم % % فأذهب عن تلك النفوس ارتيابها % % 27(@)(@@) % منعتم بني مروان حوزتها بكم % % و حزتم على رغم الأنوف نهابها % % 28(@)(@@) % و آثرتم فك العناةو إنما % % يملككم عتق الرقاب رقابها % % 29(@)(@@) % و من ينأ عن إرث النبوة والهدى % % فأنتم ورثتم هديها وكتابها % % 30(@)(@@) % و هل يتحلى بالخلافة غيركم % % و أنتم سلبتم عبد شمس ثيابها % % PageV01P168 البحر : - 1(@)(@@) % إذا السحاب حداه البرق مجنوبا % % و حث منه وميض البرق شؤبوبا % % 2(@)(@@) % و حن حتى أجاب النبت حنته % % كأنه مذكر أشجانها النيبا % % 3(@)(@@) % و حمل الريح حملا لا كفاء له % % يعيد منكبه بالثقل منكوبا % % 4(@)(@@) % و سار جحفله في الجو وانتشرت % أعلامهفحباها البرق تذهيبا % % 5(@)(@@) % و خيلبين ضرام ساطع وحيا % أبو الفوارس مرجوا ومرهوبا % % 6(@)(@@) % فجاد حيا أروي في زيارتهم % % خوفا وظنا أوري عنه تغييبا % % 7(@)(@@) % و إن حمى البين عذبا من موارده % % إلا خيالا يزيد القلب تعذيبا % % 8(@)(@@) % و ربما جنبت ريح الجنوب حيا % رد الجوى فيه حتى عاد مربوبا % % 9(@)(@@) % و شب لي في سواد الليل بارقه % % فخلته في سواد القلب مشبوبا % % 10(@)(@@) % أقول والريح تثني من أعنته % % على الثنية ألا رحت مسلوبا % % PageV01P169 11(@)(@@) % أرض إذا نسجت فيها مطارفها % % زادت لطيب الثرى أطرافها طيبا % % 12(@)(@@) % لا تستغيث إلى الأنواء تربتها % % إذا استغاث إليها الترب مكروبا % % 13(@)(@@) % دساكر و رياض حين ساعدني % % دين البطالة كانت لي محاريبا % % 14(@)(@@) % و ما تنمر جلباب الغمام بها % % إلا كسا الروض من نهر جلابيبا % % 15(@)(@@) % كأنما الغيثمرفضا بعقوتها % % نعمى الأميرإذا ارفضت شآبيبا % % 16(@)(@@) % الواهب النفس للأرماح في نشب % يعيده في طلاب الحمد موهوبا % % 17(@)(@@) % بينا تراه وأسلاب الملوك له % % رأيته بسجال العرف مسلوبا % % 18(@)(@@) % كالغيث يبسم للرواد بارقه % % و ربما عاد في الأعداء ألهوبا % % 19(@)(@@) % أقام للرفد سوقا من مكارمه % % يضحي الثناء إليهاالدهرمجلوبا % % 20(@)(@@) % و درت الجود وعدا صادقا يده % % و كان ظنا على الأياتم مكذوبا % % PageV01P170 21(@)(@@) % حلم ومكرمة ما دار بينهما % % إلا أراك هضابا أو أهاضيبا % % 22(@)(@@) % يقابل الخصم منه 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms45# منطقا ذربا % و القرن أزرق ماضي الحد مذروبا % % 23(@)(@@) % أغر لا تخضب الصهباء راحته % % حتى يرد القنا ريان مخضوبا % % 24(@)(@@) % أقول للمبتغي إدراك سؤدده % خفض عليك فليس النجم مطلوبا % % 25(@)(@@) % إن تسأل السلم تسلم من صوارمه % % أو تؤثر الحرب ترجع عنه محروبا % % 26(@)(@@) % كم من جبين أنار السيف صفحته % % فعاد طرسا بحد السيف مكتوبا % % 27(@)(@@) % و كم له في الوغى من طعنة قتلت % عداهأو نثرت رمحا أنابيبا % % 28(@)(@@) % قوم إذا جردوا البيض الرقاق حووا % % جرد الصواهل والبيض الرعابيبا % % 29(@)(@@) % بادون للعز يبدو ضوء نارهم % ليلا إذا بات ضوء البرق محجوبا % % 30(@)(@@) % يعد من تغلب صيدا غطارفة % أضحى مغالبهم في الحرب مغلوبا % % PageV01P171 31(@)(@@) % أرسوا قبابهم في البرو اتخذوا % % سورا عليه من الأرماح مضروبا % % 32(@)(@@) % إليكوافت بنا الآمال مهدية % درا إلى لجج الأفكار منسوبا % % 33(@)(@@) % من كل مخدومة الألفاظ خادمة % على نفاستها الغر المنا جيبا % % 34(@)(@@) % و كم لأفكارنا من سلك قافية % أصاب در مساع منك مثقوبا % % PageV01P172 البحر : - 1(@)(@@) % تباعد عن عرسه جعفر % فسرهما البعد بعد اقتراب % 2(@)(@@) % و كانت تصبى إلى غيره % % و كان إلى غيرها ذا تصاب % % 3(@)(@@) % فبينا هما يتبعان الهوى % % على حذر منهما وارتقاب % 4(@)(@@) % أتاح الزمان له سفرة % معجلة لم تكن في الحساب % 5(@)(@@) % فمكنها من قياد الزناة % و تمكنه من قياد القحاب % 6(@)(@@) % فودا وقد وفقا للفراق % بأن التلاقي يوم الحساب % PageV01P173 البحر : - 1(@)(@@) % قد أمكن الطالب مطلوب % و أسعد الغر المناجيب % 2(@)(@@) % و الغيث قد بان له عارض % على بساط الروض مسكوب % 3(@)(@@) % و الفجر كالراهب قد مزقت % من طرب عنه الجلابيب % 4(@)(@@) % فقم بنا ننعم في منزل % نعيمه الدائم محبوب % 5(@)(@@) % و نشتري منه رخيصا به % % كأنه للرخص موهوب % 6(@)(@@) % بيت بنته حكماء الورى % % فهو إلى الحكمة منسوب % 7(@)(@@) % مجاور النار ولكنه % % يجاور الروحبه الطيب % 8(@)(@@) % حر هو الظل لأجسادنا % % و الحر للأجسام تعذيب % 9(@)(@@) % طاب فلو رد شباب امرء % لارتد شبانا به الشيب % 10(@)(@@) % كأنهإذ ضحكت جدره % من خالص الفضة مصبوب % PageV01P174 11(@)(@@) % كأن ما قبب من سقفه % قحف من البلور مكبوب % 12(@)(@@) % كم سالب بزة أعدائه % % أطرق فيهو هو مسلوب % 13(@)(@@) % فرب شيء فيه أبصرته % % لولاه أضحى وهو محجوب % 14(@)(@@) % يخلو وفيه من صنوف الوغى % % للصيد 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms46# والقصف أعاجيب % 15(@)(@@) % تعترض الخيل على جدره % % قبلا فمجنوب ومركوب % 16(@)(@@) % و تلتقي بالبيض فرسانه % % فضارب منهم ومضروب % 17(@)(@@) % منظر حرب ما لها مخبر % سلاحها بالدم مخضوب % 18(@)(@@) % لا يرتجي العز بها غالب % و لا يخاف الذل مغلوب % 19(@)(@@) % و تطرد الوحش بها أكلب % دامية منها المخاليب % 20(@)(@@) % فلبة بالناب ملبوبة % و منكب بالظفر منكوب % PageV01P175 21(@)(@@) % و يشرب الراح به شارب % مرتفق بالتاج معصوب % 22(@)(@@) % عيانه ينبيك عن نعمة % و هو بما عاينت مكذوب % 23(@)(@@) % حتى إذا نلت به لذة % ليس على من نالها حوب % 24(@)(@@) % ملنا إلى شرب حلال لنا % % إن الحلال الطلق مشروب % 25(@)(@@) % راح يحييك بها شادن % زينه ظرف وتأديب % 26(@)(@@) % فالمسك مهجور إذا صفقت % في الكاسو الكافور مسبوب % 27(@)(@@) % و ليس يكبو الهم إلا إذا % % أعمل فيه الكاس والكوب % PageV01P176 البحر : - 1(@)(@@) % سلوت محمدا لما تمادى % % به الهجرانو انقطع العتاب % 2(@)(@@) % و قد ينسى الربيع إذا تولت % لياليه وقد يسلى الشباب % PageV01P177 البحر : - 1(@)(@@) % و قريبة من كل قلب إن بدت % للمرء أدناها إليه وقربا % % 2(@)(@@) % روى القلوب نسيمها وتلهبت % حسنا فأذكت في القلوب تلهبا % % 3(@)(@@) % صفراء ما عنت لعيني ناظر % إلا توهمها سنانا مذهبامكان البيت الرابع % % 4(@)(@@) % فكأنما ذهب حوى كافوره % % فغدا برياهو راح مطيبامكان البيت الثالث % % PageV01P178 البحر : - 1(@)(@@) % وأغن كالرشأ الغري % % ر نشا خلال الربرب % 2(@)(@@) % في خده ورد حما % % ه من القطاف بعقرب % 3(@)(@@) % لما سقاه قهوة % في الكاس ذات تلهب % 4(@)(@@) % حيا بدستنبوية % مثل السنان المذهب % PageV01P179 البحر : - 1(@)(@@) % بديعة جسمها زبرجدة % خضراء يخفي جمالها الحجب % 2(@)(@@) % مجروحة الخصرغير دامية % كما تكون الجروح والندب % 3(@)(@@) % كأنهامن جفاء لبستها % % مقرورة والهجير يلتهب % 4(@)(@@) % كأنما الماءحين تبعثه % ذوب لجين ميزابه ذهب % PageV01P180 البحر : - 1(@)(@@) % تجنبني حسن المدام وطيبها % % فقد ظمئت نفسيو طال شحوبها % % 2(@)(@@) % و عندي ظروف لو تظرف دهرها % % لما بات مغرى بالكآبة كوبها % % 3(@)(@@) % و شعث دنان خاويات كأنها % % صدور رجال فارقتها قلوبها % % 4(@)(@@) % فسقياك لا س قيا السحابفإنها % % هي العلة القصوى و أنت طبيبها % % PageV01P181 البحر : - 1(@)(@@) % يوم رذاذ ممسك الحجب % يضحك فيه السرور من كثب % 2(@)(@@) % و مجلس أسبلت ستائره % % على شموس البهاء والحسب % 3(@)(@@) % و قد جرت خيل راحنا خببا % في جريهاأو هممن بالخبب % 4(@)(@@) % و التهبت نارنافمنظرها % % يغنيك 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms47# عن كل منظر عجب % 5(@)(@@) % إذا ارتمت بالشرار واطردت % على ذراها مطارد اللهب % 6(@)(@@) % رأيت ياقوتة مشبكة % تطير عنها قراضة الذهب % 7(@)(@@) % فسر إلى المجلس الذي ابتسمت % فيه رياض الجمال والأدب % PageV01P182 البحر : - 1(@)(@@) % يحيي اشتياقا بعضنا بك بعضنا % % إذا قبل الكاس الروية شارب % 2(@)(@@) % و عندي لك الريحان زين بساطه % % بزهر كما زانت سماء كو اكب % 3(@)(@@) % و ذيل كما انجرت ذيول غلائل % مصندلة تختال فيها الكواعب % 4(@)(@@) % سقاه دموع الورد ساف أساله % % و شاب له الكافور بالمسك شائب % 5(@)(@@) % و قد أطلقت فيه الشمائل وانثنت % مقيدة في جانبيه الجنائب % 6(@)(@@) % و حافظة ماء الحياة لفتية % حياتهم أن تستلذ المشارب % 7(@)(@@) % يسربلها أجفى اللباسو إنما % % يليق بها أفوافه والسبائب % 8(@)(@@) % على جسد مثل الزبرجد لم يزل % يشاكله في لونه ويناسب % 9(@)(@@) % إذا استودعت حر اللجين سبائكا % يصوب من أجسامها وهو ذائب % PageV01P183 البحر : - 1(@)(@@) % شوى أثوابه قشب % و مد شأنه عجب % 2(@)(@@) % ترى الأمواج تسكن في % % غواربه وتضطرب % 3(@)(@@) % كسرب الوحش يبعد في % % تناطحه ويقترب % 4(@)(@@) % و يوم يؤثر اللذا % % ت فيه من له أدب % 5(@)(@@) % و شمس من وراء الدج % ن تسفر ثم تنتقب % 6(@)(@@) % و مجلسنا على شرف % بحجب الغيم محتجب % 7(@)(@@) % علا فالبرق يبسم دو % % نهو الرعد ينتحب % 8(@)(@@) % فمن شرقيه لهب ؛ % و من غربيه صخب % 9(@)(@@) % و بين يديه زاهرة % إلى الأنواء تنتسب % 10(@)(@@) % لها من كل مرتجس % يمر بها أب حدب % PageV01P184 11(@)(@@) % يميل بها قضيب البا % % ن أحيانا وينتصب % 12(@)(@@) % و قد رفعت لنا سود % نجوم سمائها الحبب % 13(@)(@@) % تجيش بما أفاء الطر % ف والمجنوبة النجب % 14(@)(@@) % و ترطن مثل ما جعلت % نساء الزنج تصطخب % 15(@)(@@) % و أحدقنا بأزهر خا % % فقات فوقه العذب % 16(@)(@@) % يواصل في اسمه فضل ال % % مقرب ثم يجتنب % 17(@)(@@) % فما ينفك من سبج % يعود كأنه ذهب % 18(@)(@@) % و إخوان الصفاء إلي % ك مشتاق ومكتئب % 19(@)(@@) % و ذكرك بينهم أزكى % % من الريحان إن شربوا % % 20(@)(@@) % و قد وافاك موكبهم % فكن حرا كما يجب % PageV01P185 البحر : - 1(@)(@@) % تصابى فأضحى بعد سلوته صبا % % و عاود عمرو طوقه بعد ما شبا % % 2(@)(@@) % و مر به رطب البنانكأنه % % يميل من أعطافه غصنا رطبا % % 3(@)(@@) % نشرت له صدر العتابفقال لي % % ظفرت بنا فاطو العتابلك 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms48# العتبى % % 4(@)(@@) % و لا وصل إلا أن تبيت أكفنا % % ركائب تزجي من مدامتنا ركبا % % 5(@)(@@) % فجدد بها عهد التواصل بيننا % % و داو بها شوقا ونفس بها كربا % % 6(@)(@@) % و كنيا بن فهد في الفتوة عاذري % % فما زلت خدنا للفتوة أو تربا % % 7(@)(@@) % و لا تجعل الذنب العظيم خيانة % فليس مليح الذنب مقترفا ذنبا % % PageV01P186 البحر : - 1(@)(@@) % يا حسن لينوفر شغفت به % % يمنحه الماء صفو مشروبه % 2(@)(@@) % كأنه عاشق به ظمأ % توهم الماء ريق محبوبه % PageV01P187 البحر : - 1(@)(@@) % هل للوزير أدام الله دولته % % في صاحب يتحرى نصح من صحبا % % 2(@)(@@) % و عارف بفنون الشعر ينقدها % % نقد الصيارفة الأوراق والذهبا % % 3(@)(@@) % طاف الذكاء به يوما يكلفه % فكاد يضرم في أثوابه اللهبا % % 4(@)(@@) % لو أن صاحبه يوما يكلفه % % ثقل الجبال إذا ما عده تعبا % % 5(@)(@@) % فخذه يرض الذي توليه من حسن % و لو نفى الأصفرينالظمأ والسغبا % % PageV01P188 البحر : - 1(@)(@@) % عندي إذا ما ارتاحت القلوب % و حن للصيد الفتى الطروب % 2(@)(@@) % أداة رزق شأنها عجيب % يخصب منها المنزل الجديب % 3(@)(@@) % كالدرع أصداها الحيا السكوب % يبعثها رام بها مصيب % 4(@)(@@) % عيونها عن عينه تنوب % في ذاخر تياره صخوب % 5(@)(@@) % له مجال فيه أو سروب % إذا ابتغى الرزق بها الطلوب % 6(@)(@@) % أعطته ما يذكو وما يطيب % % PageV01P189 البحر : - 1(@)(@@) % الكأس قطب السرور والطرب % فاحظ بها قبل حادث النوب % 2(@)(@@) % و انظر إلى الليل كيف تصدعه % راية صبح مبيضة العذب % 3(@)(@@) % كراهب حن للهوى طربا % فشق جلبابه من الطرب % 4(@)(@@) % فاليوم يوم صفت شمائله % % بصفو عيش ومنظر عجب % 5(@)(@@) % فمن صقيل المدود مطرد % كأنه ماء صفحة القضب % 6(@)(@@) % ترعد أحشاؤه لدي كما % % ترعد أحشاء هائم وصب % 7(@)(@@) % و من قصور عليه مشرفة % تضيء والليل أسود الحجب % 8(@)(@@) % بيض إذا الشمس حان مغربها % % حسبت أطرافهن من ذهب % PageV01P190 البحر : - 1(@)(@@) % كبوة الهم بين كاس وكوب % و اغتباط المحب والمحبوب % 2(@)(@@) % هو يومي من اللذاذة يجلي % % فعل يوم الكريهة المرهوب % 3(@)(@@) % حبذا اسهم تفوقها الأل % % حاظ لا تتقى بغير القلوب % 4(@)(@@) % بين خيل من المدامة قرب % ن إلي السرور بالتقريب % 5(@)(@@) % و دنان أقمن صفا كما قا % % مغداة اللقاءرجل حروب % 6(@)(@@) % و بواط كأنهن وهاد % أترعتها سجال غيث سكوب % 7(@)(@@) % فكأن الكؤوس فيها جنوحا % أنجم الليل 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms49# صوبت للمغيب % 8(@)(@@) % نحن أبناء هذه الكأس لا نع % دل عن شربها إلى مشروب % 9(@)(@@) % أدبتنا الأيام حين أرتنا % % بطش أحداثها بكل أديب % 10(@)(@@) % و علمنا أنا نصيب المنايا % % فأخذنا من الهوى بنصيب % PageV01P191 البحر : - 1(@)(@@) % لبست مصندلة الثياب فمن رأى % % قمرا تسربل بعدها أثوابا % % 2(@)(@@) % و حكت من الرشأ الربيب ثلاثة % عينا وجيدا مفتنا وإهابا % % PageV01P192 البحر : - 1(@)(@@) % فلقد حدا برق الغلي % % ل سحائب الدمع السكوب % 2(@)(@@) % لولاه لم يك للمنا % % زل في دموعي من نصيب % 3(@)(@@) % وردت عليه صوالج % لعبت بحبات القلوب % 4(@)(@@) % لما خطبت ندى الحسي % % ن أمنت غائلة الخطوب % 5(@)(@@) % قمر الندى بل ضيغم ال % % هيجاء في اليوم العصيب % 6(@)(@@) % فعفاته في مرتع % من سيب راحته خصيب % 7(@)(@@) % شيم حلين من الثنا % % ء كما عطلن من العيوب % 8(@)(@@) % بغرائب تهدي اللبا % % ب من الثناء إلى اللبيب % 9(@)(@@) % لو صافحت سمع المحب % لأذهلته عن الحبيب % PageV01P193 البحر : - 1(@)(@@) % و سألت عنهفقيل مات لما به % % قلب الندى لا شك مات لما به % % 2(@)(@@) % و كأنما بخل الزمان على الورى % % ببقائهأو هابهفبدا به % % 3(@)(@@) % فلمن أصون مدامعي من بعده % % و لأيما أبكيه من أسبابه % % 4(@)(@@) % لخطابه لجوابه لصوابه % % لحفاظه لثوابه لعقابه % % 5(@)(@@) % للحمل عن منتابهللنصح عن % % أسبابهللصفح عن مغتابه % % 6(@)(@@) % للبيض من أثوابهللزهر من % % آرائهللغر من آدابه % % 7(@)(@@) % لحجاهأم لنهاهأم لقراهأم % % لعلاهأم لنداه في أصحابه % % 8(@)(@@) % أم من يرجي بعده صرف الردى % % عن نفسه بجلاده وضرابه % % 9(@)(@@) % هيهات لا يغني البكاءإذا سطا % % أسد الزمان بمخلبيه ونابه % % 10(@)(@@) % و لئن سقاه الموت كأسا مرة % فليشربن الموت مثل شرابه % % PageV01P194 البحر : - 1(@)(@@) % فداؤك من أوردته منهل الردى % % و ورد الردى للعاشقين يطيب % 2(@)(@@) % و ما مات حتى أنحل الحب جسمه % % فلم يبق فيه للترابنصيب % PageV01P195 البحر : - 1(@)(@@) % لما مضى يومك في اللذات % و في سرور معجب الأوقات % 2(@)(@@) % و أقبل الليل على ميقات % و نشر الغرب الممسكات % 3(@)(@@) % و مد حتى صرن مظلمات % قمنا إلى الصيد بمجلبات % 4(@)(@@) % مثل البدور الزهر طالعات % تخالها بالتبر مشربات % 5(@)(@@) % و سرج كالشهب ذاكيات % بمرعدات وبمبرقات % 6(@)(@@) % زاهرة كزاهر النبات % تراع منهن مها الفلاة % 7(@)(@@) % و أكلب تستغرق الصفات % ضوامر الأحشاء مخطفات % 8(@)(@@) % إلى دماء الصيد صاديات % باسطة الآذان سابغات % 9(@)(@@) % سواقط الأرجاء ساكنات % بلؤلؤ 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms50# الطل مقرطات % 10(@)(@@) % فعن من سرب ومن ظبات % مشتبه التيجان والشيات % PageV01P196 11(@)(@@) % ترى الروامج مصندلات % قد جللتهن مفرجات % 12(@)(@@) % عن يقق البطون واللبات % و زينت منها ذرى الهامات % 13(@)(@@) % فطوقت من شبع طاقات % فلم تزل تنظر حائرات % 14(@)(@@) % راسفة رسف المقيدات % قد عميت عن سبل النجاة % 15(@)(@@) % ثمت صافحنا المجنبات % نحورها كثلة الرعاة % 16(@)(@@) % حتى إذا لاح الصباح الآتي % % و نشر الشرق معصفرات % 17(@)(@@) % تنقض حتى صرن مذهبات % قمنا بها بيضا مجردات % 18(@)(@@) % تحسبها العين مفضضات % فعدن منهن مخضبات % 19(@)(@@) % و ارتفعت قدورنا اللواتي % % تعتام في الخصب وفي الأزمات % 20(@)(@@) % ترى بنات الماء غاليات % مشرفة منها على الحافات % PageV01P197 21(@)(@@) % مثل كبار الراء طافيات % فهي وما فيها من الأقوات % 22(@)(@@) % للضيف والجيران والجارات % % PageV01P198 البحر : - 1(@)(@@) % رب صاف رقرقته % % الريح في متن صفاة % 2(@)(@@) % عبق من جر أذيا % % ل رياح عبقات % 3(@)(@@) % صافح الركبان منه % % صفحتي عذب فرات % 4(@)(@@) % أودعته الريح ما استو % دعها زهر النبات % 5(@)(@@) % فانثنوا عنه بأيد % خضرات عطرات % PageV01P199 البحر : - 1(@)(@@) % أهدت على نأي المحلو قد % % أنأى التصبر طول هجرتها % % 2(@)(@@) % نارنجة منها استعير لها % % ما ألبست من حسن بهجتها % % 3(@)(@@) % فشعاعها من نار وجنتها % % و نسيمها من عطر نكهتها % % 4(@)(@@) % و كأن ما يخفيه باطنها % % ما أضمرت من سوء غدرتها % % 5(@)(@@) % و حكى اخضرار شاب حمرتها % % قرص الأكف أديم وجنتها % % 6(@)(@@) % و أتتك مكملة محاسنها % % تختال في أثواب زينتها % % 7(@)(@@) % فشعارها صفر اللجينو من % % ذهب مصوغ ثوب بذلتها % % 8(@)(@@) % تهدي إلى الأرواح من بعد % تحف السرور بطيب نشرتها % % 9(@)(@@) % و يصونها مسرى روائحها % % من أن تباشرها بشمتها % % 10(@)(@@) % فاشرب عليها من شقيقتها % % في نعت رياها وصيغتها % % PageV01P200 11(@)(@@) % و اعطف عنان النفس عن فكر % راحت معذبة بصحبتها % % PageV01P201 البحر : - 1(@)(@@) % أمقدم يا أبا المقدامأنت على % % شعريو تاركه أسلاب غارات % 2(@)(@@) % إني خلعت إليه العذر منسلخا % من الحجاسابحا في بحر غارات % 3(@)(@@) % و كيف شن أبو الغارات غارته % % علي مقتحما بالخيل ساحاتي % % 4(@)(@@) % إن المجانين لا تلحى إذا اجترمت % و لا تلام على إتيان سوءات % 5(@)(@@) % ما كنت أحذر عارات النبيط ولا % % أخاف عض كلاب مستكينات % % 6(@)(@@) % يا مدعي الشعر كن منه على وجل % فقد منيت بشيطان له عات % % 7(@)(@@) % ذللت ذلة ذي جهل و قد كثرت 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms51# % في أخدعيك وفي اليافوخ ذلات % % 8(@)(@@) % صفع أخذت به شعري برمته % % فنلت ثأرك ثم ازددت ثارات % 9(@)(@@) % وهبك حاولت مدحا تستميح به % % فلم جريت على تلك الملامات % PageV01P202 البحر : - 1(@)(@@) % إني هديت لنعمة مكنونة % فأثرتها من تربة وصفاة % 2(@)(@@) % بئر كأن رشاءها في مائها % % سمراء قد ركزت على مرآة % 3(@)(@@) % كافورة الصيف التي تحيا بها % % طوقتها بفرائد اللبات % % 4(@)(@@) % طوقتها حجرا و لو أنصفتها % % طوقتها بقلائد اللبات % 5(@)(@@) % ملكت ثناء جوانحيفجميعها % % يثني بما أولت من الحسنات % 6(@)(@@) % و لكم منيت بغيرها فكأنما % % حاولت خير مضيع الخيرات % 7(@)(@@) % تعطيك بعد الكد ماء آجنا % طرقا كفقد الماء في الفلوات % PageV01P203 البحر : - 1(@)(@@) % شيم الأمير وفت لنا بعداتها % % فجرت سحائب جوده لعفاتها % % 2(@)(@@) % لا تعدم العلياء منه شمائلا ؛ % حسنات هذا الدهر من حسناتها % % 3(@)(@@) % نفديه إن كنا الفداء لنفسه % % من حادث الأيام أو نكباتها % % 4(@)(@@) % شكت العلى لما شكته جفونه % % فشكاته مقرونة بشكاتها % % 5(@)(@@) % قد قلت للأعداءمهلا إنها % % نوب تجلى الصبح من ظلماتها % % 6(@)(@@) % قالوااشتكى رمدا حمى أجفانه % % سنة الرقادو غض من لحظاتها % % 7(@)(@@) % فأجبتهم لم ترمد العين التي % % تحمر بأسا يوم حرب عداتها % % 8(@)(@@) % لكن رأته محاربا أمواله % % بنواله فجرت على عاداتها % % PageV01P204 البحر : - 1(@)(@@) % لا تأخذني بجرم كاسات % فما جناياتها جناياتي % % 2(@)(@@) % فالسكر برية بلا علم % يضل فيها أخو الهدايات % 3(@)(@@) % إن كنت عني الغداة منصرفا % فالحظ ثنائيو الحظ موالاتي % % 4(@)(@@) % و إن جرت زلة على سكر % فإنها اليوم بكر زلاتي % % PageV01P205 البحر : - 1(@)(@@) % لو سالمته سجايا طرفك الساجي % % لكان أول صب في الهوى ناجي % % 2(@)(@@) % سرت أوائل دمع العين حين سرت % % أوائل الحي من ظعن وأحداج % 3(@)(@@) % و من وراء سجوف الرقم شمس ضحى % تجول في جنح ليل مظلم داجي % % 4(@)(@@) % مقدودة خرطت أيدي الشباب لها % % حقين دون مجال العقد من عاج % 5(@)(@@) % كأن عبرتها يوم الفراق جرت % من ماء وجنتها أو ماء أوداج % 6(@)(@@) % ما للقوافي خطت قوما محاسنها % % و ألهجت بابن فهد أي إلهاج % % 7(@)(@@) % فكل يوم تريه روضة أنفا % تربي على الروض من حسن وإبهاج % 8(@)(@@) % مفوقات إذا استسقت أنامله % % ضحكن من عارض للجود ثجاج % 9(@)(@@) % ثنى المديح إليه عطفهفثنى % % أعطافهو منه في وشي وديباج % 10(@)(@@) % أغر ما حكمت يمناه في نشب 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms52# % إلا تحكم فيه الآمل الراجي % % PageV01P206 11(@)(@@) % و متعب في طلاب المجد همته % % مواصل للسرى فيه بإدلاج % 12(@)(@@) % معمورة بذوي التيجان نسبته % % فما يعدد إلا كل ذي تاج % 13(@)(@@) % تسطو بأسمر يمضيه سنا قبس % بين الشراسيف والأحشاء ولاج % 14(@)(@@) % و البيض فوق متون الزعف خافقة % كأنهن حريق فوق أمواج % 15(@)(@@) % عزم إذا نابت الأقوام نائبة % تكشفت عن سراج منه وهاج % 16(@)(@@) % أبا الفوارسإني مطلق هممي % % فيما أحاول من نأي وإزعاج % 17(@)(@@) % منافر نفرا رثت حبالهم % و أنهج الجود فيهم أي إنهاج % 18(@)(@@) % ترى الأديب مضاعا بين أظهرهم % % كأنه عربي بين أعلاج % 19(@)(@@) % فليس يطربهم أني مدحتهم ؛ % و ليس يغضبهم أني لهم هاج % % 20(@)(@@) % و أنت تعلم أني جد لي سفر % إني إلى الكتب فيه جد محتاج % PageV01P207 21(@)(@@) % فما يطيل مقامي في ديارهم % إلا انتظار طوامير وأدراج % PageV01P208 البحر : - 1(@)(@@) % صرفت عن الكثير الوفر طرفي % % و ها أنا للقليل الوفر راجي % % 2(@)(@@) % و كم من نطفة عذبت وطابت % أحب إلي من بحر أجاج % PageV01P209 البحر : - 1(@)(@@) % و مجرد كالنصل أسلم نفسه % % لمجرد يكسوه ما لا ينسج % 2(@)(@@) % ثوبا تمزقه الأنامل رقة % و يذيبه الماء القراحفيبهج % 3(@)(@@) % فكأنه لما التقى في خصره % % نصفان ذا عاج وذا فيروزج % PageV01P210 البحر : - 1(@)(@@) % و روضة آذريون قد زر وسطها % % نوافج مسك هيجت قلب مهتاج % 2(@)(@@) % تراها عيونا بالنهار روانيا % و عند غروب الشمس أزرار ديباج % PageV01P211 البحر : - 1(@)(@@) % سارية في الظلام مهدية % إلى النفوس الردى بلا حرج % 2(@)(@@) % شائلة في ذنيبها حمة % كأنها سبجة من السبج % PageV01P212 البحر : - 1(@)(@@) % رأيت الناس ذا جود ومنع % فذا يثنى عليهو ذاك يهجى % % 2(@)(@@) % و فقد الثلج في إبان قيظ % تذوب له الصخور الصم وهجا % % 3(@)(@@) % فجد بالقوت منه تحز ثناء % أراك بفضله أولى وأحجى % % 4(@)(@@) % و لا تتعجبن من برد شعري % % فإني طالب بالثلج ثلجا % % PageV01P213 البحر : - 1(@)(@@) % لما رأينا خمار الكأس يعلقنا % % عجنا إلى عاج أرضه سبج % 2(@)(@@) % بيت له داخل حل النعيم به % % و خارج فيه للقلب الشجي فرج % 3(@)(@@) % ذو قبة كسماء و البدور بها % % جاماتها في ذرى في الجوينشرج % 4(@)(@@) % حر وبرد سواء و الهواء به % % معدل قسمة ما شانها عوج % PageV01P214 البحر : - 1(@)(@@) % لمحة البارق من حيث لمح % طمحت للشوق 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms53# وهنا فطمح % 2(@)(@@) % أذكرتنا الجيرة الغادين من % % برقة الأبرق والركب الروح % 3(@)(@@) % و الخيام المستقلات ضحى % % بظباء نزحت فيمن نزح % % 4(@)(@@) % و ترى الكارين مغبوقا به % % روق الغيث بهأو مصطبح % % 5(@)(@@) % و قرى دجلة تطفو فوقه % % واضحات النهج ما فيه وضح % % 6(@)(@@) % كل خفاق الجناحينإذا % % فارقته غمرة الماء جنج % % 7(@)(@@) % و الربا من شاطىء النهرإذا % % سرب الماء عليه وسرح % % 8(@)(@@) % و اختيال الروض في وشي الحيا % % و اعتراض الجو في قوس قزح % % 9(@)(@@) % وطن اللهوفمن مجروحة % دمعها الراحو دمع مجترح % % 10(@)(@@) % يسلم الدمع عليه نازح % لو رآه أسلم الدمع قزح % % PageV01P215 11(@)(@@) % حبذا أحناؤه لا المنحنى % % و ذرى الطلح به لا مطلح % % 12(@)(@@) % حيث ترب الأرض مسك راقد % فإذا نبهه القطر نفح % % 13(@)(@@) % و مقال الشرب للساقي أدر % فلك الراح وللطاهي برح % % 14(@)(@@) % يا ابن فهد أنت لي جار إذا % % حادث أعضلأو خطب فدح % % 15(@)(@@) % كل قولي لك ما هذا ندى % حين قولي لأناس ما أشح % 16(@)(@@) % أربي أن أجلب الحمد إلى % % يعربي الفخرأو أهدي المدح % % 17(@)(@@) % وهب المجد له أوضاحه % % فارتداهنو للناس الترح % % 18(@)(@@) % بات يجري والحيا في طلق % كلما كل مجاريه جمح % % 19(@)(@@) % همة إن شامها غاضت به % % همة إن رامها لاح ألح % 20(@)(@@) % أصلح الله لك الدهرفقد % % أصلحت يمناك دهري فصلح % % PageV01P216 21(@)(@@) % هو عيش عاد في صحته % % و هلال عاد للسقم شبح % % 22(@)(@@) % و صيام أزعجت بارحه % % سانحات الفطر من حيث سنح % % 23(@)(@@) % و رياض تجتلى في طرف % نظم القطر حلاها وملح % % 24(@)(@@) % فإذا مر بها مرتجز % عاد فيها هزج الصوت أبح % 25(@)(@@) % فالبس البرد الذي منه ضفا % % و ادخل الباب الذي منه انفتح % % 26(@)(@@) % و اقتدح نار سرور زندها % % حين يخبووجه ساق وقدح % % 27(@)(@@) % بين أوتار إذا ما استنطقت % نثر العناب فيه والبلح % % 28(@)(@@) % و إذا ازددت لشيء فرحا % فليزد شانيكهما وترح % % PageV01P217 البحر : - 1(@)(@@) % قل للأمير الذي علا فغدا % % مرتديا بالعلى ومتشحا % % 2(@)(@@) % فتحت باب العلى و مثلك لا % % يغلق باب الندى الذي فتحا % % 3(@)(@@) % حاشاك أن تعدم السماحو أن % % يخيب راجيك بعد ما نجحا % % 4(@)(@@) % و أن يقول العذول مبتهجا % أفاق من نشوة الندى فصحا % % 5(@)(@@) % نشدتك الله والذين غدا % % فضلهم في الكتاب متضحا % % 6(@)(@@) % لا تقطعن عادتي التي 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms54# سلفت % و لا تردن سرحتي برحا % % PageV01P218 البحر : - 1(@)(@@) % سأحتج للملحي أقوم حجة % و إن كان شعري من ظباه جريحا % % 2(@)(@@) % يقولون قفصي عسا بظر أمه % و سالمه الموسى فراح صحيحا % % 3(@)(@@) % و ما ضره أن صافح البظر وجهه % إذا كان مختون اللسانفصيحا % % PageV01P219 البحر : - 1(@)(@@) % على الرغم بدلت من رغم لاح % % و من نزهي في الوجوه الصباح % 2(@)(@@) % و شربي المدامة ممزوجة % محرمها بالحلال المباح % 3(@)(@@) % و مخطفة القد مهتزة % تباكرني قبل حين الصباح % 4(@)(@@) % فتسفر عن مثل ورد الربيع % و تبسم عن مثل نور الأقاحي % % 5(@)(@@) % بيوم يجد به الدارعون % فلا يعرفون سبيل المزاح % 6(@)(@@) % ترش به السمر طعنا ترى % % مواقفنا منه حمر النواحي % % 7(@)(@@) % و يخطر في هبوتيه الكمي % بقلب جريء ووجه وقاح % 8(@)(@@) % و سابغة مثل سرد الشجاع % أو الماء عند هبوب الرياح % 9(@)(@@) % و أبيض يلمع في متنه % إذا ضلبرق الحمام المتاح % 10(@)(@@) % فمن راح يسخط عذاله % % و يرضي الهوى بين عود وراح % PageV01P220 11(@)(@@) % فإني عدمت تثني القدود % و بدلت منه بثني الرماح % 12(@)(@@) % و كنت أشيم بروق الثغور % فصرت أشيم بروق الصفاح % 13(@)(@@) % و ما إن سمعت غناء الحدي % % دإلا ذكرت غناء الوشاح % 14(@)(@@) % فليت ضجيعيليل التما % % ميعلم أني ضجيع السلاح % 15(@)(@@) % أراعي المنية عند الغدو % و أنتظر الحتف عند الرواح % 16(@)(@@) % و لو أن لي حيلة في الفرار % فررت وهان علي افتضاحي % % 17(@)(@@) % متى أطإ الأرض مبيضة % جوانبها أو أرى الجو صاح % % 18(@)(@@) % فألبس خيل الوغى راحة % و أتعب في اللهو خيل المراح % 19(@)(@@) % عسى القرب يطفىء من لوعتي % % و ينقص من غلتي والتياحي % % PageV01P221 البحر : - 1(@)(@@) % زدني من العذل فيها أيها اللاحي % % إن الفؤاد إليها جد مرتاح % 2(@)(@@) % بيضاء تنظر من طرف تقلبه % مفرق بين أجسام وأرواح % 3(@)(@@) % ماء النعيم على ديباج وجنتها % % يجول بين جنى ورد وتفاح % 4(@)(@@) % رقت فلو مزج الماء القراح بها % % والراح لامتزجت بالماء والراح % PageV01P222 البحر : - 1(@)(@@) % لم ألق ريحانةو لا راحا % % إلا ثنتني إليك مرتاحا % % 2(@)(@@) % و عندنا ظبية مهفهفة % ترأم طفلا هناك صداحا % % 3(@)(@@) % تفسد قلبي إن أفسدتهو لا % % أرى لما أفسدته إصلاحا % % 4(@)(@@) % و فتية إن تذكروا ذكروا % % من الكلام المليح أرواحا % % 5(@)(@@) % و قد أضاءت نجوم مجلسنا % % حتى 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms55# اكتسى غرة وأوضاحا % % 6(@)(@@) % لو جمدت راحنا غدت ذهبا % أو ذاب تفاحنا اغتدى راحا % % 7(@)(@@) % عصابة لو شهدت مجلسهم % % كنت شهابا لهم ومصباحا % % 8(@)(@@) % أغلق باب السرور دونهم % فكن لباب السرور مفتاحا % % PageV01P223 البحر : - 1(@)(@@) % قامت تثنى بين أترابها % % و فائح العنبر منها يفوح % 2(@)(@@) % راهبة لله في نسوة % قد ألبست قضب اللجين المسوح % % 3(@)(@@) % كأنهاإذ سفرتروضة % ألبسها الزهر صبيحا مليح % % 4(@)(@@) % لولاك لم أمش إلى بيعة % و لو مشى حولا إلي المسيح % PageV01P224 البحر : - 1(@)(@@) % نفسي فداؤك كيف تصبر طائعا % عن فتية مثل البدور صباح % % 2(@)(@@) % حنت نفوسهم إليك فأعلنوا % % نفسا يقد مسالك الأرواح % 3(@)(@@) % و غدوا لراحهمو ذكرك بينهم % % أذكى وأطيب من نسيم الراح % 4(@)(@@) % فإذا جرت حببا على أقداحهم % جعلوك ريحانا على الأقداح % % PageV01P225 البحر : - 1(@)(@@) % و هواكلو كان الملام صلاحا % % ما زاد قلبي لوعة وجراحا % % 2(@)(@@) % أحبب إلي بليلة أفنيتها % % حتى الصباح تفكها ومزاحا % % 3(@)(@@) % ما كان لو مدت علي جناحها % % للوصل ما غنى الحمام وناحا % % 4(@)(@@) % باتت يداي له وشاحا لازما % حتى كسا الليل الصباح وشاحا % % 5(@)(@@) % قم فانف بالكاسات سلطان الكرى % % واجعل مطايا الراح منك الراحا % % 6(@)(@@) % لا تأسفن على الصباح فحسبنا % % ضوء السوالف والسلاف صباحا % % 7(@)(@@) % فض النديم ختامهافكأنما % % فض الختام عن العبير ففاحا % % 8(@)(@@) % لم أدر إذ حث السقاة كؤوسها % % أكواكبا يحملن أم أقداحا % 9(@)(@@) % إني منحت ذوي الصلاح من الورى % % بغضا فلست إليهم مرتاحا % % 10(@)(@@) % من لي بدير كنت مشغوفا به % % لما عرفت الراح عاد رياحا % % PageV01P226 البحر : - 1(@)(@@) % قم بنا قبل غرة الإصباح % و قيام السقاة بالأقداح % 2(@)(@@) % نتمشى إلى النعيم الذي في % % ه صلاح الأجساد والأرواح % 3(@)(@@) % بيت ريف ترود عينك فيه % % بين بيض الطلى وبيض الفقاح % 4(@)(@@) % و تلاقي الجسوم في خلع من % % ه رقاق على الجسوم ملاح % 5(@)(@@) % من سراويل سندس تملأ العي % % ن بهاء ومن غلالة داح % 6(@)(@@) % و إذا كان مئزر الكفل النه % % د عدوا لطرفك الطماح % 7(@)(@@) % فهنيئا لك الصدور وما في % % هن من ظاهر الجمال المباح % 8(@)(@@) % و الخدود التي نقلن من الور % % د إلى عصفرية التفاح % 9(@)(@@) % و مجال النطاق حين تجيل % % الطرف في جنة ومجرى الوشاح % 10(@)(@@) % و إذا ما خلافحسبك ما في % % جدره من غرائب 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms56# الأشباح % PageV01P227 11(@)(@@) % من قيان برزن ليس على الأب % % صار في نهب حبها من جناح % 12(@)(@@) % و كماة تهز بيض سيوف % غير مرهوبة و سمر رماح % 13(@)(@@) % فإذا ما صقلت جسمك فيه % % بأكف النعيم صقل الصفاح % 14(@)(@@) % ملت من ربعه إلى رغد العي % % ش غدوا موصلا برواح % 15(@)(@@) % تتروى من الصبوح و تفتض % نسيم الرياض قبل الصباح % 16(@)(@@) % و أحق الأيام بالقصف يوم % جنيت مزنه جنوب الرياح % PageV01P228 البحر : - 1(@)(@@) % أعاد الحيا سكر النبات وقد صحا % % و جدد من عهد الربيع الذي انمحى % % 2(@)(@@) % و بات زناد البرق يقدح ناره % % على الآسحتى اهتز فيه وقدحا % % 3(@)(@@) % كأن حمام الروض نشوان كلما % % ترنم في أغصانه أو ترجحا % % 4(@)(@@) % ولاذ نسيم الروض من طول سيره % % حسيرا بأطراف الغصون مطلحا % % 5(@)(@@) % فباشر ورد الأقحوان مشرفا % و صافح ورد الباقلاء مجنحا % % 6(@)(@@) % و حلل من أزراره النورفاغتدى % % كلفظ جليب هم أن يتفصحا % % 7(@)(@@) % و شق على لون الخدود شقائقا % رأته عيون السرب أبهى وأصلحا % % 8(@)(@@) % أراك نصال النبل قبل اتضاحه % % و حل خراج النبل حين تفتحا % % PageV01P229 البحر : - 1(@)(@@) % إن عن لهو أو سنح % فاغد إلى اللهو ورح % 2(@)(@@) % رضيت أن أحظى بعز % اليأس والعز منح % % 3(@)(@@) % و صاحب يقدح لي % % نار السرور بالقدح % % 4(@)(@@) % فرحت مطوي المنى % % لا أزجر الطير الروح % % 5(@)(@@) % و لا أقول لامرىء % ضن بمال أو سمح % % 6(@)(@@) % و لا أرى من صبوة % نهج التقى و إن وضح % % 7(@)(@@) % تصافح الكأس يدي % % ما ارتد خطب أو صفح % % 8(@)(@@) % في روضة قد لبست % % من لؤلؤ الطل سبح % % 9(@)(@@) % يألفني حمامها % % مغتبقا ومصطبح % % 10(@)(@@) % أوقظه بالعزفأو % % يوقظنيإذا صدح % % PageV01P230 11(@)(@@) % و الجو في ممسك % طرازه قوس قزح % % 12(@)(@@) % يبكي بلا حزن كما % % يضحك من غير فرح % % 13(@)(@@) % كم جامح ممتنع % خليته لما جمح % % 14(@)(@@) % و كم عذول ناصح % قلت لهو قد نصح % % 15(@)(@@) % أقصر فمن رام صلا % % ح العيش بالكأس صلح % % PageV01P231 البحر : - 1(@)(@@) % خطرات هي العلاو ارتياح % و غدو إلى الوغى ورواح % 2(@)(@@) % و أياد تحثهن عدات % مثل ما حثت السحاب الرياح % 3(@)(@@) % يا حسام الإلهيا جبل الدن % % ياو يا بحرها الذي يستماح % 4(@)(@@) % ففداك الهمام والملك المر % % جو للبذل والفتى الجحجاح % 5(@)(@@) % خطأ قولنا لمثلكيفدي % % ه ذوو النقص والنفوس 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms57# الشحاح % 6(@)(@@) % كيف تفدي الربا الشواهق أم كي % % ف يساوى بغمرة ضحضاح % 7(@)(@@) % بك تمضي الظبى وتجري المذاكي % % و يصول الردى ويدمى السلاح % 8(@)(@@) % سفر مسفر لك السعد فيه % % قاده اليمنو انتحاه النجاح % 9(@)(@@) % في خميس كالليل وجهك مصبا % % ح تجلى ضياه بل إصباح % 10(@)(@@) % هاك منك العدو أرقم يسري % % في سراه إليهحين متاح % PageV01P232 11(@)(@@) % عبد نعماك منذ شهرين ثاو % فاعتلاق يحيا به أو سراح % PageV01P233 البحر : - 1(@)(@@) % وباكية ليلها كله % % تحاكي الصباح بمصباحها % % 2(@)(@@) % بصيرة ليل ولكنها % % ضريرتهعند إصباحها % % 3(@)(@@) % نجز لإصلاحها رأسها % % فإفسادها عند إصلاحها % % PageV01P234 البحر : - 1(@)(@@) % الكأس تهدي إلى شرابها فرحا % فما لهذا الفتى صفرا من الفرح % 2(@)(@@) % يصفر إن صب ساقيه لنا قدحا % كأنما دمه ينصب في القدح % PageV01P235 البحر : - 1(@)(@@) % أنخت في حانة أترجة % و حبذا حانتها من مناخ % 2(@)(@@) % ثم اطرحنا الدين في بيتها % % حتى انسلخنا منه أي انسلاخ % 3(@)(@@) % تصافح الخمر به نفسها % % و تزرع النسل بها في السباخ % % 4(@)(@@) % كل سميع في الهوى مبصر % أعمى عن الرشد أصم الصماخ % 5(@)(@@) % حتى إذا الشمس بها آذنت % % خيامها الصفر بحل الأواخ % 6(@)(@@) % راحوا على الراحو قد بدلوا % % مشي الفرازين بمشي الرخاخ % % PageV01P236 البحر : - 1(@)(@@) % وقائع مثل ما بدأت تعود % و خيل ما تحط لها لبود % 2(@)(@@) % و فتيان تقيتهم دروع % مضاعفة و صبرهم عتيد % 3(@)(@@) % و تعرين أسفار الأعادي % % تمائمه إذا ارتاع الحديد % 4(@)(@@) % و أيام على الإسلام بيض % و هن على العدا حمر وسود % 5(@)(@@) % تفتح زهرة الآمال فيها % % فتوح لا يقد لها بريد % 6(@)(@@) % يخبر عن طراد يتقيه % % كرى الأعداءفهو له طريد % 7(@)(@@) % و مبرقة الحتوفإذا أسالت % دماء الشيب شاب لها الوليد % 8(@)(@@) % يبيت جلادها شرقا وغربا % حديثا تقشعر له الجلود % 9(@)(@@) % و لا إحجام إلا أن تكفي % % عن البيضالحياة أو الخدود % 10(@)(@@) % خطا الذرب الأصم إلى سمند % و قعقعة الحديد لها حديد % PageV01P237 11(@)(@@) % أيرهب جانب الأعداء ميلا % و سيف الدولة الركن الشديد % 12(@)(@@) % و قاد الخيل قبا يقتضيها % % ذخيرة جهدهاأو يستزيد % 13(@)(@@) % فأرسلها على الصفصاف يخفي % % سنا أوضاحها عنه الكديد % 14(@)(@@) % و زارت أرض خرشنة رعالا % فكادت أرض خرشنة تميد % 15(@)(@@) % و جزن على الصعيد مبرقعات % براقعهن ما نسج الصعيد % 16(@)(@@) % و خرت في قرى جيحان تردى 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms58# % % بجائحة عليهاأو ترود % 17(@)(@@) % و باتت توقد النيرانفيها % % و سيان الكواكب والوقود % 18(@)(@@) % و سحن بجانبي سيحان حتى % % رجعن وفجه المعمور بيد % 19(@)(@@) % فأصبح وهو ورد الموج مما % % يفيض عليه نحر أو وريد % 20(@)(@@) % إذا خرت عليه رأيت بحرا % تخر عليه من بحر مدود % PageV01P238 21(@)(@@) % و أوردها الخليج وقد تساوت % بجمتها التهائم والنجود % 22(@)(@@) % و فوق للحصون سهام نار % يصاب بلفحها الغرض البعيد % 23(@)(@@) % إذا انتشرت على الجدران راقت % كما راقت من العصب البرود % 24(@)(@@) % إذا ركع القنا الخطي صلوا % % صلاة جل واجبها السجود % 25(@)(@@) % فما أبقيت إلا مخطفات % حمى الأخطاف منها والنهود % 26(@)(@@) % تساق إليه مثنى أو فرادى % % كما يهوي من السلك الفريد % 27(@)(@@) % و بيضك يا بن عبد الله تلقى % % سباياها الحسان كما تريد % 28(@)(@@) % تقد البيض في الهيجاء قدا % و تثنيها السوالف والقدود % 29(@)(@@) % أتاك وفي حشاه رياح روع % عواصف ما لهبتها ركود % 30(@)(@@) % بوجه غاض ماء الأرض عنه % % فليس بعائد ما اخضر عود % PageV01P239 31(@)(@@) % و رب ممنع حاولت منه % % فلم يمنعه معقله المشيد % 32(@)(@@) % ومشرقة لقاصدها صبوب % على قمم السحائب أو صعود % 33(@)(@@) % تحف بها شواهق شامخات % كما حفت بسيدها الجنود % 34(@)(@@) % كأن فوارع الشرفات منها % % نساء في ملاحفها قعود % 35(@)(@@) % أحطت بها الأسنة لامعات % فهن على ترائبها عقود % 36(@)(@@) % فأولدها قراعكو هي بكر % و لم تر قبلها بكر ولود % 37(@)(@@) % رأت أمثال صورتها حديدا % فكادتو هي راسية تميد % 38(@)(@@) % و مازالت جيادك طاويات % تقاد إلى العدوفتستقيد % 39(@)(@@) % ضربت بها الثغرين سدا % يؤيد ركنه رأي سديد % 40(@)(@@) % و أبت بهاو قد أحرزت مجدا % قناك عليهو البيض الشهود % PageV01P240 41(@)(@@) % طوالع بين إيماض وخرس % تمائمها البوارق والرعود % 42(@)(@@) % تلقين الثرى صما تساوى % % بهن الرمل والحجر الصلود % 43(@)(@@) % فطورا بالأرند لها طراد ؛ % و طورا بالخليج لها ورود % 44(@)(@@) % و لما قابلت طرسوس غرا % محجلة تقابلها السعود % 45(@)(@@) % كففت شذاتهافارتد بأس % كدفاع الحريقو فاض جود % 46(@)(@@) % لقد شرفت بسؤددك القوافي % % و فاز المجد والحسب التليد % 47(@)(@@) % فيوم الحرب تطربك المذاكي ؛ % و يوم السلم يطربك النشيد % 48(@)(@@) % تحاسدت الملوكفليس تخبو % % ضغائنهاو لا تفنى الحقود % 49(@)(@@) % و أنت الدهر إنعاما وبؤسا % و ما للدهرنعلمهحسود % PageV01P241 البحر : - 1(@)(@@) % فتوحك ردت بهجة الملك سرمدا % % و أنت حسام الله فل 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms59# بك العدا % % 2(@)(@@) % يحدث عنك المشرفي مجردا % و يثني عليك السمهري مسددا % 3(@)(@@) % أعاد وأبدى الفتح منك معودا % قراع العدا جار على ما تعودا % % 4(@)(@@) % و ممطر أرض الروم من دم أهلها % % سحابا إذا روى الثرى منه أحمدا % % 5(@)(@@) % تخالف فعل الغيث منهفكلما % % بدا العود مخضرا ثناه موردا % % 6(@)(@@) % سرى مخلقا في الله ديباج وجهه % % فذب عن الإسلام حتى تجددا % % 7(@)(@@) % يفلق بالضرب التريك وما حوى % % و يخرق بالطعن الدلاص المسردا % % 8(@)(@@) % فيا لك من يوم أحر عليهم % و أندى على الدين الحنيف وأبردا % % 9(@)(@@) % و رب محلى بالكواكب شاخص % شخصت إليهفانمحى وتأبدا % % 10(@)(@@) % فأعطاك ما تهوى وقلد أمره % % نجوم قنا أضحى بهن مقلدا % % PageV01P242 11(@)(@@) % مثلت له في مثل أركان طوده % و أسطرت فيه الجلمد الصلد جلمدا % % 12(@)(@@) % و صدر وراء السابري خرقته % % فكان ثقاف الرمح لما تأودا % % 13(@)(@@) % و أبيض رقراق السوابغ أرهجت % سنابكه حتى ثنا الجو أربدا % % 14(@)(@@) % تتابع يهفو فوقه كل طائر % إذا صافحته راحة الراح غردا % % 15(@)(@@) % و أشرق في رأد الضحى فكأنما % % تلاعب منه الشمس صرحا ممردا % % 16(@)(@@) % يزف نجوما ليس يمنع ضوءها % % تكاشف ليل النقع أن يتوقدا % % 17(@)(@@) % إذا ما رأتهن البطارق أنحسا % رآهن مجتاح البطارق أسعدا % % 18(@)(@@) % صدعت ببرق البيض صدر عجاجة % و قد أبرق المقدار فيه وأرعدا % % 19(@)(@@) % و أبت وقد أشربت ساحته دما % كأنك أشرقت الأسنة عسجدا % % 20(@)(@@) % لقد لبس الإسلام شرقا ومغربا % بسيف ابن عبد الله ظلا ممددا % % PageV01P243 21(@)(@@) % ثنى الخيل عن ماء الفرات صوادرا % فكان لها ورد الخليجين موردا % % 22(@)(@@) % يطير على أرباض خرشنة بها % % لوافح يهتكن المنيف المشيدا % % 23(@)(@@) % حريقا يغشي الجدر حتى كأنما % % لبسن حبير الوشي مثنى وموحدا % % 24(@)(@@) % إذا الغرض المنصوب بات معصفرا % بطائر سهم منه أصبح أسودا % % 25(@)(@@) % فبات على البرج المطلكأنما % % يلاحظ منه فرقدا ثم فرقدا % % 26(@)(@@) % و بث السرايا حولها فتفرقت % كما بثت الريح الحيا فتبددا % % 27(@)(@@) % فبات مغذا في السلاحو موجفا % مغيرا عليهم في البلادو منجدا % 28(@)(@@) % يؤانس منهم كل ليث حفيظة % على الطرف وحشي الشمائل أغيدا % % 29(@)(@@) % كأن رماح الخط حول بيوتهم % % على صهوات الخيل درا مبددا % % 30(@)(@@) % عرضت على البيض الرقاق أسودهم % % و سقت المها حوا إليها وسهدا % % PageV01P244 31(@)(@@) % و 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms60# قومت منهم جانبا لظهورهم % % و أشرفتهم بالمشرفية منشدا % % 32(@)(@@) % و أوردت حد السيف قمة لاون % لتمزج فيه سورة البأس بالندى % % 33(@)(@@) % أتاك يهز الروع أعضاء جسمه % % كما هز بالأمس الحسام المهندا % % 34(@)(@@) % يغض لديك الرعب أجفان عينه % % فإن هم أن يستغرق اللحظ أرعدا % % 35(@)(@@) % و رب حديد اللفظ واللحظ منهم % مثلت له فارتد أخرس أرمدا % % 36(@)(@@) % ذعرتهم غزوا دراكا فأصبحوا % % على البعد خفاق الحشا ومسهدا % % 37(@)(@@) % يظنون غربي السحاب كتيبة % تشرقو البرق الشآمي مطردا % % 38(@)(@@) % إذا الدولة الغراء سمتك سيفها % % لتبهجسماك الهدى ناصر الهدى % % 39(@)(@@) % ليهنك أن الروم ذل عزيزها % % فصارت مواليها بعزك أعبدا % % 40(@)(@@) % إذا قيل سيف الدولة اهتز عرشها % % و خرت ركوعا عند ذاك وسجدا % % PageV01P245 البحر : - 1(@)(@@) % م بودي لو ملكت ثني قيادي % % فأعتاض عن غي الهوى برشاد % 2(@)(@@) % تمادت دموعي يوم جدت بك النوى % % و للوم في أعقابهن تماد % % 3(@)(@@) % أقيمو حظي الهجر عند إقامتي % % و أرحلو الشوق المبرح زادي % % 4(@)(@@) % إذا ما حداه البرق يرتاح صبوة % إلى رائح من ذي الأراك و غاد % % 5(@)(@@) % و إن لم يكن عهد الشباب براجع % لديهو لا عصر الصبا بمعادص بودي لو ملكت ثني قيادي % % 6(@)(@@) % فأعتاض عن غي الهوى برشاد % تمادت دموعي يوم جدت بك النوى % % 7(@)(@@) % و للوم في أعقابهن تمادي % % أقيمو حظي الهجر عند إقامتي % % 8(@)(@@) % و أرحلو الشوق المبرح زادي % % إذا ما حداه البرق يرتاح صبوة % 9(@)(@@) % إلى رائح من ذي الأراك و غادي % % و إن لم يكن عهد الشباب براجع % 10(@)(@@) % لديهو لا عصر الصبا بمعاد % و أخرى تحامى خلتي عند خلتي % % PageV01P246 11(@)(@@) % فسيان قربي عندها وبعادي % % و تعجب من ضن القريض وخبره % % 12(@)(@@) % على وشل لا ري فيه لصادي % % فما تعبي إلا لتجديد راحة % 13(@)(@@) % و لا سهري إلا لطول رقادي % % كليني إلى المهرية القود إنها % % 14(@)(@@) % ستأخذ من أيدي الخطوب قيادي % % و كل فتى أجدى علي فصاحبي ؛ % 15(@)(@@) % و كل بلاد أخصبت فبلادي % % و أقسم بالغمض الذي جاد موهنا % 16(@)(@@) % تحية مشتاق ورنة حادي % % لفقد الندى الربعي أوجدني الأسى % % 17(@)(@@) % و أفقدني عيشي ولين مهادي % % و وسدني أيدي الركابو طالما % % 18(@)(@@) % أقض لديها مضجعي ووسادي % % إذا أنا حاولت الأميرفإنما % % 19(@)(@@) % أحاول 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms61# منه جنتي وعتادي % % حلللت بنادي الشأم لما أعاده % % 20(@)(@@) % علي بن عبد الله أكرم نادي % % أغرإذا امتدت يد الدهر كفها % % PageV01P247 21(@)(@@) % ببيض صفاح أو ببيض أيادي % % يروع الندى أمواله بنفادها % % 22(@)(@@) % و ما ريع مجد عنده بنفاد % إذا امتزج المعروف بالبشر عنده % % 23(@)(@@) % غدا الحمد ممزوجا له بوداد % رمى كل منآد القناة من العدا % % 24(@)(@@) % بخطب تحاماه الخطوب نآد % بجرد تثير النقع حتى كأنما % % 25(@)(@@) % تمزق منه البيض ثوب حداد % و بيض إذا اهتزت ترقرق ماؤها % % 26(@)(@@) % و هن إلى ماء النفوس صوادي % % وكل رديني أصم كأنما % % 27(@)(@@) % تروع منه الروع حية وادينهبودي لو ملكت ثني قيادي % % فأعتاض عن غي الهوى برشاد % 28(@)(@@) % تمادت دموعي يوم جدت بك النوى % % و للوم في أعقابهن تماد % % 29(@)(@@) % أقيمو حظي الهجر عند إقامتي % % و أرحلو الشوق المبرح زادي % % 30(@)(@@) % إذا ما حداه البرق يرتاح صبوة % إلى رائح من ذي الأراك و غاد % % PageV01P248 31(@)(@@) % و إن لم يكن عهد الشباب براجع % لديهو لا عصر الصبا بمعاد % 32(@)(@@) % و أخرى تحامى خلتي عند خلتي % % فسيان قربي عندها وبعادي % % 33(@)(@@) % و تعجب من ضن القريض وخبره % % على وشل لا ري فيه لصاد % % 34(@)(@@) % فما تعبي إلا لتجديد راحة % و لا سهري إلا لطول رقادي % % 35(@)(@@) % كليني إلى المهرية القود إنها % % ستأخذ من أيدي الخطوب قيادي % % 36(@)(@@) % و كل فتى أجدى علي فصاحبي ؛ % و كل بلاد أخصبت فبلادي % % 37(@)(@@) % و أقسم بالغمض الذي جاد موهنا % تحية مشتاق ورنة حادي % % 38(@)(@@) % لفقد الندى الربعي أوجدني الأسى % % و أفقدني عيشي ولين مهادي % % 39(@)(@@) % و وسدني أيدي الركابو طالما % % أقض لديها مضجعي ووسادي % % 40(@)(@@) % إذا أنا حاولت الأميرفإنما % % أحاول منه جنتي وعتادي % % PageV01P249 41(@)(@@) % حلللت بنادي الشأم لما أعاده % % علي بن عبد الله أكرم ناد % % 42(@)(@@) % أغرإذا امتدت يد الدهر كفها % % ببيض صفاح أو ببيض أياد % % 43(@)(@@) % يروع الندى أمواله بنفادها % % و ما ريع مجد عنده بنفاد % 44(@)(@@) % إذا امتزج المعروف بالبشر عنده % % غدا الحمد ممزوجا له بوداد % 45(@)(@@) % رمى كل منآد القناة من العدا % % بخطب تحاماه الخطوب نآد % 46(@)(@@) % بجرد تثير النقع حتى كأنما % % تمزق منه البيض ثوب حداد % 47(@)(@@) % و بيض إذا اهتزت ترقرق ماؤها % % و هن 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms62# إلى ماء النفوس صواد % 48(@)(@@) % وكل رديني أصم كأنما % % تروع منه الروع حية وادي % % 49(@)(@@) % تحف بجذلان العشيكأنه % % لدى طرد ما راح نصب طراد % 50(@)(@@) % و أغلب رحب الباع ينجده الردى % % إذا ما ارتدى في مأزق بنجاد % PageV01P250 51(@)(@@) % يبيتو حد السيف حل مبيته % % لديهو جفن العين حل سهاد % 52(@)(@@) % يصعد أنفاس العدوإذا ثنى % % إليه المنايا في ظبى وصعاد % 53(@)(@@) % أمام خميس يحجب الأفق بالقنا % % و يملأ أقطار الثرى بجياد % 54(@)(@@) % فمن عاد بالكيد الخفيفإنه % % يعود بيأس في الكريهة باد % 55(@)(@@) % سأعلم نفسي بالسماحة عالما % بأن بلاد التغلبي بلادي % % 56(@)(@@) % فدونكها تختال في كل مسمع % و تخطر في مكنون كل فؤاد % 57(@)(@@) % حبتك بريحان الكلامو إنما % % تجود برياه لكل جواد % 58(@)(@@) % بأطيب من طيب الرقاد لساهر % و أعذب من ريق الحبيب لصاد % % PageV01P251 البحر : - 1(@)(@@) % عذر العذول فراح فيك مساعدا % % و غدا الهوى لهوى المشوق معاهدا % % 2(@)(@@) % لما رأى للبين وجدا طارفا % منهو للهجران وجدا تالدا % % 3(@)(@@) % و هوى يردد في محاجر مغرم % دمعا يكون على التلدد شاهدا % % 4(@)(@@) % ما ضر وسنى المقلتين لو انها % % ردت على الصب الرقاد الشاردا % % 5(@)(@@) % سفرت لهفأرته بدرا طالعا % و تمايلتفأرته غصنا مائدا % % 6(@)(@@) % و تبسمتفجلت له عن واضح % متألق يجلو الظلام الراكدا % % 7(@)(@@) % حتى إذا وقفت لتوديع النوى % % في موقف يدني الجوى المتباعدا % % 8(@)(@@) % نثرت رياح الشوق في وجناتها % % من نرجس فوق الخدود فرائدا % % 9(@)(@@) % لحظت ربيع ربيعنا آمالنا % % فغدت ركائبنا إليه قواصدا % % 10(@)(@@) % يحملن للحسن بن عبد الله في % % حر الحديث مآثرا ومحامدا % % PageV01P252 11(@)(@@) % بدع إذا نظم الثناء عقودها % % كانت لأعناق الملوك قلائدا % % 12(@)(@@) % قل للأمير أبي محمد الذي % % أضحى له المجد المؤثل حامدا % % 13(@)(@@) % أما الوفودفإنهم قد عاينوا % % قبل الربيع بك الربيع الوافدا % % 14(@)(@@) % يغشون من شرق البلاد وغربها % % بالموصل الزهراء أروع ماجدا % % 15(@)(@@) % خشعت له إن بان عنها صادرا % و تبسمت لما أتاها واردا % % 16(@)(@@) % فكأنما حل الربيع ربوعها % % فكسا السهولة والحزون مجاسدا % % 17(@)(@@) % أجرت يداه بها الندى فكأنما % % أجرى بساحتها الفرات الباردا % % 18(@)(@@) % ملك إذا ما كان بادىء نعمة % ألفيته عجلا إليها عائدا % % 19(@)(@@) % متفرد من رأيه بعزائم % لو أنهن طلعن كن فراقدا % % 20(@)(@@) % و خلائق كالروض في رأد الضحى % % تدني إليه 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms63# أقاصيا وأباعدا % % PageV01P253 21(@)(@@) % يستنصرون على الزمانإذا اعتدى % % من لا يزال على الزمان مساعدا % % 22(@)(@@) % جذلان ليس على المكارم صابرا ؛ % يقظان ليس عن الكريهة حائدا % % 23(@)(@@) % خلق يسر الناظرين ومنطق % أبدا يفيد السامعين فوائدا % % 24(@)(@@) % و يد تعيد الماء في أقلامها % % جودا وتكسو الطرس نورا حاشدا % % 25(@)(@@) % إن ألبست تزهى بك الدنيافقد % % أصبحت للدنيا شهابا واقدا % % 26(@)(@@) % و بسطت آمال العفاة بهافقد % % حمدوا نداك مصادرا ومواردا % % 27(@)(@@) % و لبست مجدك بالصوارم والقنا % % و النجم ليس يراه إلا صاعدا % % 28(@)(@@) % أدركت ما حاولت منه وادعا % فعلوت من يرجو لحاقك جاهدا % % 29(@)(@@) % و غدوت ركنا في الخطوب لتغلب % و يدا لها في المكرمات وساعدا % % PageV01P254 البحر : - 1(@)(@@) % صنائع الله لا نحصي لها عددا ؛ % فنحمد الله حمدا دائما أبدا % % 2(@)(@@) % كفت يد الدهر إذ مدت إلى ملك % ما زال يبسط بالجدوى إلي يدا % % 3(@)(@@) % سلامة لبس المجد السرور بها % % من بعد ما حشيت أحشاؤه كمدا % % 4(@)(@@) % قل للعدو الذي أخفى عداوته % % و جاء يهدي إليه الحتف مجتهدا % % 5(@)(@@) % لو ساعدتك الليالي لم تدع وزرا % للمكرماتو لم تترك لها عضدا % % 6(@)(@@) % سم الشراب ليدني الحتف من أسد % إذ لم ينل بظباه الصارم الأسدا % % 7(@)(@@) % فنال منه كما نال النبيو قد % % أخفوا له في الشواء الغدر والحسدا % % 8(@)(@@) % يفدي الأمير المرجى معشر عجزوا % % عن عقد ما حلأو عن حل ما عقدا % % 9(@)(@@) % هي السعود التي كنا نؤملها % % ردت صروف الليالي عيشة رغدا % % 10(@)(@@) % تجددت لك أثواب الحياة بها % % فالبس برغم العدا أثوابها الجددا % % PageV01P255 البحر : - 1(@)(@@) % رد جفني بسافح الدمع يندى % % حين حييتهفأحسن ردا % % 2(@)(@@) % سمحت لي به السجوففما حا % % د عن العينو الركائب تحدى % % 3(@)(@@) % قمر كلما منحناه لحظا % منح اللحظ جلنارا و وردا % % 4(@)(@@) % هو كالريم ما تلفت جيدا ؛ % و هو كالغصن ما تأود قدا % % 5(@)(@@) % أناإن راح أو غدا لفراق % في رواح من الحمام ومغدى % % 6(@)(@@) % أيها البرقإن وجدت غماما % فاسق نجدا بهو من حل نجدا % % 7(@)(@@) % و تعهد تلك الخيامففيها % % ظبيات يفتكن بالصب عمدا % % 8(@)(@@) % بجديد الشؤبوب يصبح منه % % خلق الروض ناضرا مستجدا % % 9(@)(@@) % و مرب يخفي صنائع بيضا % حين يبدي لنا شمائل ربدا % % 10(@)(@@) % و كأن الوميض ينشر نورا % في أعاليه أو 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms64# يفوف بردا % % PageV01P256 11(@)(@@) % عاد بحر السرور بالشيب جزرا % بعدما كان بالشبيبة مدا % % 12(@)(@@) % و أساء الزمان فيه إلينا % % حين أعطى القليل منه وأكدى % % 13(@)(@@) % كان كالبرق استتم خمودا % قبل أن يستتم للعين وقدا % % 14(@)(@@) % قد غنينا عن السحابو لو كا % % ن رحيقا بين السقاة وشهدا % % 15(@)(@@) % أصبحت راحة الأمير أبي الهي % % جاء أحلى جنى وأعذب وردا % % 16(@)(@@) % سيد يهدم الثراءو يبني % % سؤددا في حمى النجوم ومجدا % % 17(@)(@@) % غمرتنا له سجال عطايا % % كسجال الغمام أسرف جدا % % 18(@)(@@) % يضعف الشكر عن مكافاة ما نو % ول فيهاو ما أفاد وأسدى % % 19(@)(@@) % و إذا عدت المناهل كانت % يده منهلا من العرف عدا % % 20(@)(@@) % سد منه وجه الخطوب فأضحى % % دون ما يتقي من الدهر سدا % % PageV01P257 21(@)(@@) % و كفى الوفد أن يحث المطايا % % بندى يغتدي إلى الوفد وفدا % % 22(@)(@@) % أنت سعد العفاةيا بن سعيد % و كفاهم بأن تطاول سعدا % % 23(@)(@@) % مستهل إذا تبسم برقا % و هو بين الخطوب قهقه رعدا % % 24(@)(@@) % بات يهدي إلي شوقا إلى بش % رك مستبشرا إلى الروض يهدى % % 25(@)(@@) % و بطيء في السير يسرع ومضا % مثل ما تسرع الأنامل عدا % % 26(@)(@@) % فتذكرت جد نعماك لما % % مرح الغيث في الرياض وجدا % % 27(@)(@@) % أنا جلد على الخطوبو لكن % لست فيها على جفائك جلدا % % 28(@)(@@) % أوسع الدهرمذ تعتبتذما % بعدما كنت أوسع الدهر حمدا % % 29(@)(@@) % فكأني أرى السرور عدوا % أتحداهو المدامة هندا % 30(@)(@@) % فلو اني ارتشفت ثغر حبيب % بارد الظلم لم أنل منه بردا % % PageV01P258 31(@)(@@) % أجفاء مرا و لم أجن ذنبا % فأجازى به بعادا وصدا % % 32(@)(@@) % و اطراحا يبيت يخلق صبرا % بين أحشاي أو يجدد وجدا % % 33(@)(@@) % حين جارت علي أحداث دهر % ليس يسلكن بيإذا سرت قصدا % % 34(@)(@@) % نوب لو علت شماريخ رضوى % % أوشكت أن تخر منهن هدا % % 35(@)(@@) % عرضتني على الحسامفأضحى % % كل عضو مني لحديه غمدا % % 36(@)(@@) % و كست مفرقي عمامة حرب % أرجوانية الذوائب تندى % % 37(@)(@@) % و إذا قست هجرك المر بالده % رو ما قد جناه كان أشدا % % 38(@)(@@) % أنا حر إذا انتسبتو لكن % جعلتني لك الصنائع عبدا % % 39(@)(@@) % لا أقول الغمام مثل أيادي % % كو لا السيف مثل عزمك حدا % % 40(@)(@@) % أنت أمضى من الحسام وأصفى % % من حيا المزن في المحولو أندى % % PageV01P259 البحر : - 1(@)(@@) % أقبل كالذود 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms65# رعت شوارده % % أغر لا تكذبنا مواعده % % 2(@)(@@) % فظل يعتاد الحياة قائده % % و راح ظمآن الثرى يناشده % % 3(@)(@@) % حتى إذا ما ارتجست رواعده % % و أذهبت ببوقها عطارده % % 4(@)(@@) % عادت بما سر الثرى عوائده % و انتثرت في روضها فرائده % % 5(@)(@@) % و اطردت بصفوها موارده % % حتى ظننا حسنا يجاوده % % 6(@)(@@) % هو الحيا الربعيفاز قاصده % % مبذولة لوفده فوائده % % 7(@)(@@) % مصروفة عن خلة مكائده % % شاهدة بفضله مشاهده % % 8(@)(@@) % منظومة من شكره قلائده % % يحمده وليه وحاسده % % PageV01P260 البحر : - 1(@)(@@) % أما آن للملحي أن ينشر الودا % % و يطوي الجفاء المر والهجر والصدا % % 2(@)(@@) % أيغضب أن حليت كف ابن هاشم % سوار هجاج يقرض القلب لا الزندا % % 3(@)(@@) % و ما خلت ضعفان العراق يسومني % % لأمثاله ذما يسيرا ولا حمدا % % 4(@)(@@) % إذا الورد يوما انتحاه بكفه % حسبت قفاه روضة تنبت الوردا % % 5(@)(@@) % تجود سحاب الخافقات قذاله % فتوسعه هطلا ومن دمه تندى % % PageV01P261 البحر : - 1(@)(@@) % سهادي فيك أعذب من رقادي % % و غيي فيك أحسن من رشادي % % 2(@)(@@) % و إن حل الفراق عقود دمعي % % و بينت النوى ما في فؤادي % % 3(@)(@@) % فما زالت غوادي الدمع تبدي % % خفي الوجد للظعن الغوادي % % 4(@)(@@) % مها لو ملكت غرب التنائي % % لآثرت الدنو على البعاد % 5(@)(@@) % مريضات الجفونإذا انتحتنا % % بأسهمهاصحيحات الوداد % 6(@)(@@) % فمن نشوان من شوق طريف % أضفناه إلى شوق تلاد % 7(@)(@@) % و كم للبين من شوق طريف % أضفناه إلى شوق تلاد % 8(@)(@@) % و يوم لو ملكت قياد صبري % % به ألفيتني صعب القياد % 9(@)(@@) % نصرت على الهوى بالدمع فيه % % كما نصر الأمير على الأعادي % % 10(@)(@@) % فتى كالدهر يسعد من يوالي % % بأنعمهو يشقي من يعادي % % PageV01P262 11(@)(@@) % ترى الأقدار تنجد فيه نجدا % رحيب الباع يخطر في النجاد % 12(@)(@@) % سديد الرأي والرمح استقامت % طرائقه على طرق السداد % 13(@)(@@) % و أبيض في سواد الخطب يسري % % بعزم في سواد الليل هاد % 14(@)(@@) % بفرع من عدي بين ماضي % % غرار العزمأو واري الزناد % 15(@)(@@) % فلاح سناه في زمن بهيم % و ذاب نداه في سنة جماد % 16(@)(@@) % رميت ذوي العنادو قد تمادوا % % سفاها في العداوة والعناد % 17(@)(@@) % بجيش للمنايا فيه جيش % شديد البأس في النوب الشداد % 18(@)(@@) % إذا ماج الحديد ضحى عليه % % حسبت البربحرا ذا طراد % 19(@)(@@) % ببيض أخلصت حتى أقامت % % عمود الصبح في ظلم الدآدي % % 20(@)(@@) % و سمر 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms66# سمرت فيهن زرق % هواد في النحور وفي الهوادي % % PageV01P263 21(@)(@@) % إذا صدرت عن الأجساد خيلت % مضمخة الصدور من الجساد % 22(@)(@@) % فألبست الخلافة ثوب عز % غداة لبست قسطلة الجياد % 23(@)(@@) % و أنت مظفر في يوم سعد % محا إشراقه ظلم البلاد % 24(@)(@@) % رأينا الليث في غاب العوالي % % بهو الشمس في ظل الأيادي % % 25(@)(@@) % سلمت لنشر عارفة رفات % تعمو دفع نائبة نآد % 26(@)(@@) % فكم حلت بساحتك الأماني % % فلم يصدرن عن ورد ثماد % 27(@)(@@) % و كم قصدتك أبكار القوافي % % فلم يقنع نوالك باقتصاد % 28(@)(@@) % أرى من الحسين بلا امتنان % و إحسان الحسين بلا نفاد % 29(@)(@@) % خلال كلها روض أريض % قريب العهد من صوب العهاد % 30(@)(@@) % يفوز بها كريم عن كريم % و يحويها جواد عن جواد % PageV01P264 31(@)(@@) % زففت إليه من مدحي عروسا % معرسة الهوى في كل نادي % % 32(@)(@@) % بألفاظ عذبنفهن أشهى % % إلى الصادي من العذب البراد % 33(@)(@@) % سواد في بياض لاح حتى % % حسبناه بياضا في سواد % 34(@)(@@) % و إن بدأت مواهبهو عادت % % فمدحي عائد فيه وبادي % % PageV01P265 البحر : - 1(@)(@@) % صدودك علم النوم الصدودا % % و جدد للهوى عهدا جديدا % % 2(@)(@@) % مللتفعاد منك الجودمنعا % و لو أنصفت عاد المنع جودا % % 3(@)(@@) % أحل وداعنا عطفا جديدا % و أدنى بيننا وصلا بعيدا % % 4(@)(@@) % فمن خد يصافح فيه خدا ؛ % و من جيد يعانق فيه جيدا % % 5(@)(@@) % و ساجي الطرف ألبسه التصابي % % سخابا يلبس الجزع الجليدا % % 6(@)(@@) % أنازعه اللحاظ فإن تصدى % % لنا واش تنازعنا الصدودا % % 7(@)(@@) % فما ضيعت فيه الحلمإلا % لأحفظ في الهوى منه العهودا % % 8(@)(@@) % و ما انحلت عقود الدمع حتى % % تحلى من مدامعه عقودا % % 9(@)(@@) % سقى ربعا يجدد لي التصابي % % رباهو يخلق الصبر الجديدا % % 10(@)(@@) % حيا يزداد منه الروض حسنا % إذا ما ازداد بارقة وقودا % % PageV01P266 11(@)(@@) % فكم صعدن من أنفاس صب % فأروى من مدامعه الصعيدا % % 12(@)(@@) % تلقى الدهر آمالي بنجح % و عاد ذميم أيامى حميدا % % 13(@)(@@) % و قالألا إلى جود ابن فهد % فرحت من الليالي مستزيدا % % 14(@)(@@) % فتى يمسي بنائله مفيدا % و يصبح للمحامد مستفيدا % % 15(@)(@@) % ربيع الجود ما ينفك يبدي % % ربيعا من خلائقه مجودا % % 16(@)(@@) % مليء أن يزيد الأزد فخرا % طريفا أو يشيد لها تليدا % % 17(@)(@@) % رأى وجه العلى حسنا جميلا % فأصبح بالعلى صبا عميدا % % 18(@)(@@) % ورد عطاه لي صفو العطايا % % فليس 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms67# يمل وارده الورودا % % 19(@)(@@) % و مد عليه ظل السيفحتى % % تفيأ للعلى ظلا مديدا % % 20(@)(@@) % فأسعد جوده جدا شقيا % و أشقى بأسه جدا سعيدا % % PageV01P267 21(@)(@@) % تمل أبا الفوارس مشرقات % تعيد نحوسها أبدا سعودا % % 22(@)(@@) % و زادك وافد الآمال نشرا % يبشر بالعلى منك الوفودا % % 23(@)(@@) % فكم أنجزت من عدة لعاف % فأنجز للزمان بك الوعيدا % % 24(@)(@@) % متى شرفت غيرك بامتداحي % % لبست بمدحك الشرف العتيدا % % 25(@)(@@) % و كم لي فيك من عذراء بكر % تخال لحسنها عذراء رودا % % 26(@)(@@) % عرائس ما اجتلاها الطرفإلا % أباحته السوالف والخدودا % % 27(@)(@@) % بألفاظ يراها القلب بيضا % إذا ما عاينتها العين سودا % % 28(@)(@@) % مخلدة تطيل شجى الأعادي % % و تضمن عن معاليك الخلودا % % 29(@)(@@) % شغلت بها قلوب الناس طرا % فما تنفك نسخا أو نشيدا % % PageV01P268 البحر : - 1(@)(@@) % أأقحوانا أرته أم بردا % % غيداء يهتز عطفها غيدا % % 2(@)(@@) % رنت إليه بطرف خاذلة % ضعيفة الطرف تضعف الجلدا % % 3(@)(@@) % لو وجدت للفراق ما وجدا % % لافتقدت نومها كما افتقدا % % 4(@)(@@) % لا تلح صبا على صبابته % % و إن رأى الغي في الهوى رشدا % % 5(@)(@@) % فلم تزل للفراق غائلة % تلذ في المورد الذي وردا % % 6(@)(@@) % لو كفيوم الفراق أدمعنا % % الصبر كفينا الملام والفندا % % 7(@)(@@) % إلفان لم يألفا الصدودو لم % % يستبدلا من كراهما السهدا % % 8(@)(@@) % أذل عز النوى عزاءهما % % و بين البين منهما الكمدا % % 9(@)(@@) % سرنا بآمالنا إلى ملك % يسر بالآمل الذي وفدا % % 10(@)(@@) % مستيقظ الرأي والعزيمة ما % % استيقظ طرف الزمانأو رقدا % % PageV01P269 11(@)(@@) % فلاح روض النسيم مبتسما % و فاض بحر السماح مطردا % % 12(@)(@@) % مد ابن فهد إلى العفاة يدا % كفت من الدهر ساعدا ويدا % % 13(@)(@@) % فاض على آمليه منه حيا % أنفد آمالهم وما نفدا % % 14(@)(@@) % و الغيث والليث والهلال إذا % % أقمر بأسا ونجدة وندى % % 15(@)(@@) % خلائق منه غضة تركت % خلائق الدهر غضة جددا % % 16(@)(@@) % و همة ما تطأطأت همم % الأقوام إلا سمت به صعدا % % 17(@)(@@) % ما بعدت للعلاء منزلة % إلا أرته بعادها صعدا % % 18(@)(@@) % ناس من الجود ما يجود به % % و ذاكرا منه كلما وجدا % % 19(@)(@@) % بذلت وجدي من الثناء لمن % يبذل في المكرمات ما وجدا % % 20(@)(@@) % أغر يغريه بالندى خلق % رد به الجود بعدما فقدا % % PageV01P270 21(@)(@@) % يحل ما يعقد الزمان ولا % % يحل صرف الزمان ما عقدا % % 22(@)(@@) % سلمت للمجد يا سلامة ما % % غرد 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms68# حاد لرحلة وحدا % % 23(@)(@@) % قضيت حق الصيام مجتهدا % فرحت بالأجر منه منفردا % % 24(@)(@@) % و شرد الهم عن مواطنه % % عيد أعاد السرور إذ شردا % % 25(@)(@@) % فاسعد بدنيا بدت محاسنها % % منكفأعطتك عيشة رغدا % % 26(@)(@@) % و مدحة ثقفتفلم يدع % التثقيف ميلا بهاو لا أودا % % 27(@)(@@) % أماتت الحاسدين من أسف % و غادرت أوجه العدا ربدا % % PageV01P271 البحر : - 1(@)(@@) % كان جليدا فخانه جلده % و عاده بعد همة كمده % 2(@)(@@) % و أطلق الشوق أسر عبرته % % و هو أسير الفؤاد مضطهده % % 3(@)(@@) % أدمع ذاك الغزال فاض على ال % % خدينأم عقده وهت عقده % % 4(@)(@@) % قام يريد الوداع كالغصن % الريان يثني قوامه غيده % % 5(@)(@@) % و ذو الهوى غضة صبابته % % يكابد الشوق طبه كبده % % 6(@)(@@) % كم بين تلك السجوف من مقل % تبذل من دمعها الذي تجده % % 7(@)(@@) % و مستعير النضار من رشإ % لم يخطه لحظه ولا جيده % % 8(@)(@@) % لا يرتجى الصب برد غلته % % ما ضن عنه بريقه برده % % 9(@)(@@) % غدا ابن فهد و المجد شيمته % % و الجود والمجد لهوه ودده % % 10(@)(@@) % فتى فتى السماحمكتهل ال % % حلم ذكي الفؤاد متقده % % PageV01P272 11(@)(@@) % و مسرف الجود حين يقتصد ال % % غيثرفيق الفعال مقتصده % % 12(@)(@@) % كم من صباح سناه عزمته ؛ % و من أياد سماتهن يده % % 13(@)(@@) % مناقب ينطوي الحسود لها % % على جوىأو يميته حسده % % 14(@)(@@) % جرى فبذ الملوك حين جرى % % و فات أقصى مداهم أمده % % 15(@)(@@) % و كيف يرجو لحاقه ملك % يضيق عن رحب صدره بلده % % 16(@)(@@) % ربع كأن الربيع ألبسه % % غرائب النور يانعا خضده % % 17(@)(@@) % و منهل راق وردهفغدا % % يطرد عنا الإعدام مطرده % % 18(@)(@@) % و صارم لم يشمه ذو زرد % إلا تفرى عن حده زرده % % 19(@)(@@) % إذا ارتدى مهجة الكمي غدا % % مضرجا من جساده جسده % % 20(@)(@@) % يعضد قرما تقله يده % % طورا و طورا يكنه عضده % % PageV01P273 21(@)(@@) % يلقى المنايا من راح يوعده % % حتما و يلقى النجاح من يعده % % 22(@)(@@) % صنيعه سائر يلوحو هل % % يخفى صنيع مدائحي برده % % 23(@)(@@) % وقف علينا الثناءما اطردت % حسنا معانيهو استوى أوده % % 24(@)(@@) % و كلما أخلقت بدائعه % جاءت إليه مجدة جدده % % PageV01P274 البحر : - 1(@)(@@) % يغض الطرف عن ورد الخدود % و يعرض عن مهفهفة القدود % 2(@)(@@) % مقر للعواذل بالتصابي ؛ % مقيم للوشاة على الجحود % 3(@)(@@) % أفاد به الهوى شوقا طريفا % يضرم لوعة الشوق التليد % 4(@)(@@) % و من جور 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms69# الهوى أن راح يزجي % % مطايا البين في أثر الصدود % 5(@)(@@) % و فوق العيش بيض وكلتنا % % بأيام من الهجران سود % 6(@)(@@) % و غزلان تزيل الوشي صونا % لوشي جمالها الغض الجديد % 7(@)(@@) % إذا خطرت فما للقمص إلا % % مصافحة الروادف والنهود % 8(@)(@@) % هي الأيام إن جمحت عنادا % أذلت كل جبار عنيد % 9(@)(@@) % تنام وتطرق الأحداث يقظى % % و لوع الطيف بالركب الهجود % 10(@)(@@) % إليكفرب هاجرة أفاءتأيخشى الخطب ذو قلب حداد وخطب غياهبه حديد % % علي إفاءة الظل المديدسقط بيت % % PageV01P275 11(@)(@@) % إذا لم آو فيه إلى ابن فهد % فما آوي إلى ركن شديد % 12(@)(@@) % إذا حل الوفود له محلا % غدوا وحملهم عطن الوفود % 13(@)(@@) % أتيت مروعا يهتز جأشي % % فأبت محسدا يهتز عودي % % 14(@)(@@) % فعش للمجد تنجز فيه وعدا % من الجدوى وتصفح عن وعيد % PageV01P276 البحر : - 1(@)(@@) % وقانا الله فيك منى الحسود % ودافع عنك للكرم التليد % 2(@)(@@) % و مد عليك للنعماء ظلا % فإنا منك في ظل مديد % 3(@)(@@) % فصدتفلا عراك الهم فيه % % و لا عريت من ثوب السعود % 4(@)(@@) % دم ود المؤمل لو فداه % % بماء الوجهأو بدم الوريد % 5(@)(@@) % و كف لو يكون لها كفاء % وقيناها بديباج الخدود % 6(@)(@@) % فكان لها الشفاء بغير كلم % و كان بنا مباشرة الحديد % PageV01P277 البحر : - 1(@)(@@) % قسمت قلبي بين الهم والكمد % و مقلتي بين فيض الدمع والسهد % 2(@)(@@) % و رحت في الحسن أشكالا مقسمة % بين الهلال وبين الغصن والعقد % 3(@)(@@) % أرينني مطرا ينهل ساكبه % % من الجفون وبرقا لاح من برد % 4(@)(@@) % ووجنة لا يروي ماؤها ظمأ % % بخلا وقد لذعت نيرانها كبدي % % 5(@)(@@) % فكيف أبقي على ماء الشؤونو ما % % أبقى الغرام على صبري ولا جلدي % % 6(@)(@@) % جرى ابن فهد فلم يدرك له أمد % و كل ذي سؤدد يجري إلى أمد % 7(@)(@@) % و حن للجود مهتزا ومنتصبا % كالرمح لم يؤت من ميل ولا أود % 8(@)(@@) % وعلم الدهر من أخلاقه خلقا % أذكى من الورد أو أحلى من الشهد % 9(@)(@@) % فالمجد منه علا مقرونة بعلى % % و الجود منه يد موصولة بيد % 10(@)(@@) % فضلان ما زال محسودا بنيلهما % % والبأس والجود مقرونان بالحسد % PageV01P278 11(@)(@@) % أغر لا صلف يزري بسؤدده % % بين الملوكو لا كبر على أحد % 12(@)(@@) % يريك من رقة الألفاظ منطقه % % در العقودغدت محلولة العقد % 13(@)(@@) % جعلته جنة 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms70# من كل نائبة % و رحت من جوده في جنة الخلد % 14(@)(@@) % أبا الفوارس أحييت السماح لنا % % و قمت فيه قيام الروح للجسد % 15(@)(@@) % ما رمت إحصاء ما أوليت من حسن % إلا وزاد على الإحصاء والعدد % 16(@)(@@) % آثرت في الصوم تقوى الله مجتهدا % على هواك وبعت الغي بالرشد % 17(@)(@@) % فاسعد بعيد أعاد اللهو في سعة % و اليمن في دعة والعيش في رغد % 18(@)(@@) % تقدمت مدحة زهراء مشرقة % كالروض يضحك عن نوارة الخضد % 19(@)(@@) % و جاش بحري فلم أقنع بواحدة % حتى أتيت بها مشتدة العضد % 20(@)(@@) % قلادة جال فيها الفكر فانتظمت % نظم القلائد لم تنقص ولم تزد % PageV01P279 البحر : - 1(@)(@@) % سواء علينا وعدها ووعيدها % % إذا ما تساوى وصلها وصدودها % % 2(@)(@@) % وقفنا وقد ريعت مها الحيفانثنت % تصيد بألحاظ المها من يصيدها % % 3(@)(@@) % أعن وسن ترنو إلي عيونها ؛ % أمن سكر مالت علي قدودها % % 4(@)(@@) % فجازعة تعطي الغرام قيادها % % وقد راح مقتاد الغرام يقودها % % 5(@)(@@) % وساكنة تهتز ساكنة الجوى % % إذا اهتز من ماء الشبيبة عودها % % 6(@)(@@) % فللورد خداهاو للخمر ريقها % % وللغصن عطفاهاو للريم جيدها % % 7(@)(@@) % ألم ترني عفت المطالب إذ عفا % % من الجود مغناها ورث جديدها % % 8(@)(@@) % و صنت عقود المدح من كل ممسك % يهون عليه درها وفريدها % % 9(@)(@@) % هل المجد إلا في أياد تفيدها % % سجايا ابن فهد أو معال تشيدها % % 10(@)(@@) % فتى حث جدواهفما يستحثها % % و زادت أياديهفما يستزيدها % % PageV01P280 11(@)(@@) % له شرف عالي المحلو همة % تصعد أنفاس العدو صعودها % % 12(@)(@@) % و مازال فرد المكرماتو إنما % % يؤمل فرد المكرماتوحيدها % % 13(@)(@@) % ترى بين عينيه من البشر أنجما % تلوح لمرتاد السماح وفودها % % 14(@)(@@) % فإن تشتهر في كل شرق ومغرب % معالي ابن فهد فالثناء يزيدها % % 15(@)(@@) % سلامةإن الأزد بالبأس والندى % % تسود الورى طرا و أنت تسودها % % 16(@)(@@) % و قد علم الأعداء أن لست بادئا % بجائحة إلا وأنت معيدها % % 17(@)(@@) % رأت أسدا يلقى المنية حاسرا % إذا اختال في قمص الحديد أسودها % % 18(@)(@@) % فأقصر عنها بأسها ودفاعها % % و أكهم منها حدها وحديدها % % 19(@)(@@) % أرقت لود منك أودى ابتسامه % % و أنجم بشر منك غابت سعودها % % 20(@)(@@) % و ما ستر الكتمان عندي صنيعة % و لا أفسد النعماء في جحودها % % PageV01P281 21(@)(@@) % سأنشر فضلا لاتزال تديمه % و أثني بنعمى لاتزال تفيدها % % 22(@)(@@) % و أشكرها 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms71# شكر الرياض صنيعة % من الرائحات الغر راحت تجودها % % 23(@)(@@) % فولت تجار الحمد تنشر حمدها % % و قد سعدت بالجود منك جدودها % % 24(@)(@@) % أريتهم وجها طليقا وراحة % يري بأسها في النائبات وجودها % % 25(@)(@@) % و صارت قوافي الشعر فيك عرائسا % تضيء الدجى أجيادها وخدودها % % 26(@)(@@) % فلا زالت الأيام تلقاك بيضها % % خصوصا وتلقى من يعاديك سودها % % 27(@)(@@) % فتسعد في خفض من العيش سعدها % % و يعتاد في يمن من الدهر عيدها % % 28(@)(@@) % و دونك من مستطرف الوشي خلعة % مطارفها موشية وبرودها % % 29(@)(@@) % فما زهرت إلا لديك نجومها % % و لا حسنت إلا عليك عقودها % % PageV01P282 البحر : - 1(@)(@@) % قل لابن فهد و إن شطت منازله % % و كم بعيد على العافين ما بعدا % % 2(@)(@@) % إن الغصون التي رويتها شحبت % و كيف نضرتهاو الماء قد نفدا % % 3(@)(@@) % غشيت بعدك منسوبا إلى أدب % يجفو الأديب ويطفي نوره حسدا % % PageV01P283 البحر : - 1(@)(@@) % فرقت بين جفونه ورقاده % % و جمعت بين غرامه وفؤاده % % 2(@)(@@) % و أبث في ثنيي حشاه صبابة % باتت لها الأشجان بين وساده % % 3(@)(@@) % لله أيام الكثيبفقد مضت % بمراده الغض الهوى ومراده % % 4(@)(@@) % أيام للعذال عز جماحه % % شغفا و للأحباب ذل قياده % % 5(@)(@@) % غفلات دهر غيه وضلاله % % أولى بنا من هديه ورشاده % % 6(@)(@@) % و دجى بذات الطلح يبيض الهوى % % لأخي الصبابة في ارتكام سواده % % 7(@)(@@) % و ثرى كأن رباه تنشر حليها % % ما بين حر تلاعه ووهاده % % 8(@)(@@) % عطر تمر به الرياح فتنكسي % % عطرين من أجسادها وجساده % % 9(@)(@@) % ما صان قرب العيش فيه مدامعي % % حتى أزيل مصونها لبعاده % % 10(@)(@@) % و إذا الصبا أضحى عتاد متيم % فنفادها يهواه عند نفاده % % PageV01P284 11(@)(@@) % و الدهر كالنشوان في إصلاحه % % ما راح يصلحه وفي إفساده % % 12(@)(@@) % راع لنا يجتاح دثر سوامه ؛ % و أب لنا يسطو على أولاده % % 13(@)(@@) % ففعاله المحمود عند بخيله % % و فعاله المذموم عند جواده % % 14(@)(@@) % و لو اقتدى فينا بأحمد لارتدى % % بردين من توفيقه وسداده % % 15(@)(@@) % خرق تخرق في سماح لم يزل % غمر السماح يقل عند ثماده % % 16(@)(@@) % مرتاد حمد لاتزال خوافقا % رايات أنعمه على مرتاده % % 17(@)(@@) % إن كنت مطرد الجوارفعذ به % أو كنت ممتحن الزمان فناده % % 18(@)(@@) % يعطيك ما يعطيه غرب حسامه % % و شبا أسنتهو كر جواده % % 19(@)(@@) % مازال يصعد بين بيض سيوفه % % قلل 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms72# الفخارو بين سمر صعاده % % 20(@)(@@) % تعب الجوانح يشتري قضض العلى % % أبدا براحته ولين مهاده % % PageV01P285 21(@)(@@) % قد قلت للجاري على آثاره % % أنت الجوادو لست من أنداده % % 22(@)(@@) % ذهبت سجالك عند جري جواده % % و خبا ضرامك عند وري زناده % % 23(@)(@@) % و إذا امرؤ أعيت عليك سهوله % % فاغضض جفونك عن ذرى أطواده % % 24(@)(@@) % شرف إذا ما اختال فيهرأيته % % في تاج تبعه وحلة عاده % % 25(@)(@@) % بيت لتبع تلتقي عمد العلى % % في ملتقى أطنابه وعماده % % 26(@)(@@) % هذاو معترك إذا عرك القنا % % فيه الشجاع مضى طريد طراده % % 27(@)(@@) % خلط العجاجة بالدماءكأنما % % نشرت مجاسده خلال جياده % % 28(@)(@@) % أوفى عليفما انجلت غمراته % % إلا بصدق كفاحه وجلاده % % 29(@)(@@) % رحل الصيامو قد أعد من التقى % % و النسك فيه عدة لمعاده % % 30(@)(@@) % متمسكا بالصدق في موعوده % % متمسكا بالعفو في إيعاده % % PageV01P286 31(@)(@@) % قبل الإله صيامه في شهره % و أعاد ما يهواه من أعياده % % PageV01P287 البحر : - 1(@)(@@) % فما يباليإذا ما الدهر أسعده % % ضن الخلي بدمع العين أو جادا % % 2(@)(@@) % وعن للعين سرب راح يذكره % شبائه السرب ألحاظا وأجيادا % % 3(@)(@@) % راحوا رياحا تزجي كل سارية % من الندى وغدوا للحلم أطوادا % % 4(@)(@@) % تناهبوا الفضل دون الناس كلهم % فأصبح الناس أعداء وحسادا % % 5(@)(@@) % لا يبعد الله منكم عصبة فضلت % فزادها الفضل إقصاء وإبعادا % % 6(@)(@@) % كشيمة العود مازالت بلا سبب % تهدي إلى العود إحراقا وانفادا % % 7(@)(@@) % قتلى أقيمت بأكناف العراق لها % % مآتم أصبحت بالشام أعيادا % % PageV01P288 البحر : - 1(@)(@@) % باليمن ما رفع الأمير وشيدا % % و بجده النعماء ما قد جددا % % 2(@)(@@) % قصر أناف على القصور بحلة % ملك أناف على الملوك مؤيدا % % 3(@)(@@) % قلناو قد أعلاه جد صاعد % في الجو حتى ما يصادف مصعدا % % 4(@)(@@) % أبنية ببنائها فضح البنا % % أم فرقد بسناه شان الفرقدا % % 5(@)(@@) % غرف تألق في الظلامفلو سرى % % بضيائهاساري الدجنة لاهتدى % % 6(@)(@@) % عني الربيع بها فنشر حولها % % حللا تدبج وشيها أيدي الندى % % 7(@)(@@) % فكأنما تزجي السحائب فوقها % % جيشا يهز البرق فيه مطردا % % 8(@)(@@) % و كأنما نشر الهواء بجوها % % في كل ناحية رداء مجسدا % % 9(@)(@@) % و كأن ظل النخل حول قبابها % % ظل الغمامإذا الهجير توقدا % % 10(@)(@@) % من كل خضراء الذوائب زينت % بثمارها جيدا لها ومقلدا % % PageV01P289 11(@)(@@) % خرقت أسافلهن ريان الثرى % % حتى اتخذن البحر فيه موردا % % 12(@)(@@) % شجر إذا ما الصبح أسفر 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms73# لم ينح % للأمن طائرهو لكن غردا % % 13(@)(@@) % غنيت مغانيها الحسان عن الحيا % % ماراح في عرصاتهنو ما اغتدى % % 14(@)(@@) % بمشمر في السير إلا أنه % % يسري فيمنعه السرى أن يبعدا % % 15(@)(@@) % وصل الحنين بعبرة مسفوحة % حتى حسبناه مشوقا مكمدا % % 16(@)(@@) % مسترفد أمواج دجلة رافد % وجه الثرى أكرم به مسترفدا % % PageV01P290 البحر : - 1(@)(@@) % أناشد دهري أن يعود كما بدا % % فقد غار بي في الحادثات وأنجدا % % 2(@)(@@) % توعدني من بعد ما وعد الغنى % % فأنجز إيعادا وأخلف موعدا % % 3(@)(@@) % و كنت أرى الأيام ظلا ممددا % و مهتصرا غضا وعيشا ممهدا % % 4(@)(@@) % فصرن لريب الدهر سهما مسددا % و أسمر خطيا وعضبا مجردا % % 5(@)(@@) % سقاهاو ما السقيا بكف صنيعها % % خليع الحيا إن جر برديه غردا % % 6(@)(@@) % فزار من الديرين إلفا ومألفا % و جاد على النهرين عهدا ومعهدا % % 7(@)(@@) % مراقد من بسط الرياضإذا اكتفى % % بهن صريع الراح لم ينب مرقدا % % 8(@)(@@) % و ليل كأن الترب تحت رواقه % % مندى بماء الورد ما باشر الندى % % 9(@)(@@) % تعانقنا فيه الرياح مريضة % كأنا لقيناها مع الصبح عودا % % 10(@)(@@) % أرتنا الليالي قصدها دون جورها % % و شأن الليالي أن تجور وتقصدا % % PageV01P291 11(@)(@@) % و من عجب أن الغبيين أبرقا % % مغيرين في أقطار شعريو أرعدا % % 12(@)(@@) % فقد نقلاه عن بياض مناسبي % % إلى نسب في الخالدية أسودا % % 13(@)(@@) % و إن عليا بائع الملح بالنوى % % تجرد لي بالسب فيمن تجردا % % 14(@)(@@) % و عندي له لو كان كفء قوارضي % % قوارض ينثرن الدلاص المسردا % % 15(@)(@@) % و مغموسة في الشري والأري هذه % % ليردى بها باغ و تلك لترتدى % % 16(@)(@@) % إذا رام علج الخالدية نيلها % % أخذن بأعنان النجوم وأخلدا % % 17(@)(@@) % لك الويل إن أطلقت بيض سيوفها % % و أطلقتها خزر النواظر شردا % % 18(@)(@@) % و لست لجد القول أهلا فإنما % % أطير سهام الهزل مثنى وموحدا % % 19(@)(@@) % نصبت لفتيان البطالة قبة % ليدخلها الفتيان كهلا وأمردا % % 20(@)(@@) % و كان طريق القصف وعرا عليهم % فسهلته حتى رأوه معبدا % % PageV01P292 21(@)(@@) % و كم لذة لا من فيها ولا أذى % % هديت لها خدن الضلال فأفسدا % % 22(@)(@@) % قصدتهم وزنا فساويت بينهم % % و لم تأخذ السيف الشديد لتقصدا % % 23(@)(@@) % و جئتهم قبل ارتداد جفونهم % % بمائدة تكسى الشرائح والمدى % % 24(@)(@@) % و مبيضة مما قراه محمد % أبوك لكي تبيض عرضا ومحتدا % % 25(@)(@@) % نثرت عليها 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms74# البقل غضا كأنما % % نثرت على حر اللجين الزبرجدا % % 26(@)(@@) % و مصبوغة بالزعفران عريضة % كأن على أعضائها منه مجسدا % % 27(@)(@@) % ترقبها الصياد يوما فقادها % % كما قدت بالرفق الجواد المقيدا % % 28(@)(@@) % و لم يدر إذ أنجى لها بردائه % % أكان ردا ما ارتد منه أم ردى % % 29(@)(@@) % تريكو قد علت بياضا بصفرة % مثالا من الكافور ألبس عسجدا % % 30(@)(@@) % يحف بها منهم كهول وفتية % كأنهم عقد يحف مقلدا % % PageV01P293 31(@)(@@) % فلا نظر الداعي إلى الزاد كفهم % % و لا خجلة المدعو ردت لهم يدا % % 32(@)(@@) % و ملت بهم من غير فضل عليهم % إلى الورد غضا والشراب موردا % % 33(@)(@@) % فيا لك يوما ما أخف مؤونة % و أعذب في تلك النفوس وأرغدا % % 34(@)(@@) % مناهدة إن بات مثلك طيها % % تنفس مجروح الحشاأو تنهدا % % 35(@)(@@) % فلا عدم الفتيان منك قرارة % أيسلهم سعدا علي مسعدا % % 36(@)(@@) % معدا لهم في كل يوم مجود % من الراح والريحانعيشا مجددا % % 37(@)(@@) % إذا وصلوا أضحى الخوان مدبجا % و إن وصلوا أمسى الخوان مجردا % % 38(@)(@@) % و إن شرعوا في لذة كنت بيعة ؛ % و إن طعموا في مرفق كنت مسجدا % % 39(@)(@@) % لك القبة العلياء أوضحت فتقها % % و أطلعت منها للفتوة فرقدا % % 40(@)(@@) % يصادف فيها الزور جديا مبرزا % و باطية ملأى و ظبيا مغردا % % PageV01P294 41(@)(@@) % و قد فضلت بيض القباب لأنني % % نصبت عليها بالقصائد مطردا % % PageV01P295 البحر : - 1(@)(@@) % إسمع مقالا من أخ ذي ود % و ذاك أني كنت حلف وجد % 2(@)(@@) % بشادن في كل حسن فرد % مليح وجه ورشيق قد % 3(@)(@@) % كبدر تم في قضيب رند % فزارني الآن بغير وعد % 4(@)(@@) % جاء مفاجأةو ليس عندي % % إلا طعام غير مستعد % 5(@)(@@) % دجاجة في شبه السمند % تليدة و فخرها بالهند % 6(@)(@@) % عظيمة الزور بصدر نهد % أجريت منها في مجال العقد % 7(@)(@@) % مرهفة ذات شبا وحد % لغير ما ذحل وغير حقد % 8(@)(@@) % بل رغبة فيها شيبة الزهد % و لم تزل بالماء كف العبد % 9(@)(@@) % و فصلت أعضاؤها من بعد % مع لب أترج كلون الشهد % 10(@)(@@) % بل طعمه عن طعمه ذو بعد % حتى إذا أسعرها بالوقد % PageV01P296 11(@)(@@) % صب عليها اللوز مثل الزبد % و غليت بعد بماء الورد % 12(@)(@@) % ثم أتى يسعى بها كالمهدي % % كأنها قد بخرت بالند % PageV01P297 البحر : - 1(@)(@@) % أعاذلإن النائبات بمرصد % و 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms75# إن سرور المرء غير مخلد % 2(@)(@@) % إذا ما مضى يوم من العيش % فصله بيوم صالح العيشمرغد % 3(@)(@@) % و حالية من حسنها وجمالها % % و إن برزت عطل الشوى والمقلد % 4(@)(@@) % تعاطيك كأسا غير ملأى كأنما % % فواقعها أحداق درع مزرد % 5(@)(@@) % كأن أعاليها بياض سوالف % تلوح على توريد جيب مورد % PageV01P298 البحر : - 1(@)(@@) % و ابنة بر لم تبن عن زهد % أضحى بها البحر قريب العهد % 2(@)(@@) % تعافهو هو زلال الورد % فليس تحبوه بصفو الود % 3(@)(@@) % إلا بربط عنده وشد % لما نضت ملاحف الإفرند % 4(@)(@@) % و اتشحت من الدجى ببرد % توسطت سكر صفيح صلد % 5(@)(@@) % و أشبهت واسطة في عقد % مطلة على ركاب الوفد % 6(@)(@@) % كأنها أم النعام الربد % عجاجها شيب فود المرد % 7(@)(@@) % واجدة بالبر أي وجد % تذكرت طيب ثراه الجعد % 8(@)(@@) % أيام تغذى بجنى كالشهد % و لمع برق وحنين رعد % 9(@)(@@) % فهي تعيد أنة وتبدي % % كما يئن موثق في القيد % 10(@)(@@) % لولا امتداد الطنب الممتد % لشمرت تشمير ذات الجد % PageV01P299 11(@)(@@) % فصافحت خد الثرى بخد % % PageV01P300 البحر : - 1(@)(@@) % رب أيام على القفص لنا % % لا نرى أمثالها طول الأبد % 2(@)(@@) % غضة ريحاننا الغض بها % % أسد من غابة الورد ورد % 3(@)(@@) % ما رأى الناس شروبا مثلنا % % شربوا الراح على وجه الأسد % PageV01P301 البحر : - 1(@)(@@) % و بكر شربناها على الورد بكرة % فكانت لنا وردا إلى ضحوة الغد % 2(@)(@@) % إذا قام مبيض اللباس يديرها % % توهمته يسعى بكم مورد % PageV01P302 البحر : - 1(@)(@@) % أمير الندى إن الثناء خلود ؛ % و إن القوافي السائرات جنود % 2(@)(@@) % إذا انفض من حول الملوك عديدها % % فحولك منها عدة وعديد % 3(@)(@@) % فهنإذا ناضلن عنك صوارم ؛ % و هنإذا لاحت عليك عقود % 4(@)(@@) % و لي من ندى كفيك رسم تضاءلت % معالمهحتى تكاد تبيد % 5(@)(@@) % غدا خلقا و الحمد فيه مجدد % و منتقصا و الشكر فيه يزيد % 6(@)(@@) % فلا يك رسمي من نوالك دارسا % فرسمك غض من ثناي جديد % PageV01P303 البحر : - 1(@)(@@) % قد وفت المزن بميعادها % % و خصت الروض بإسعادها % % 2(@)(@@) % و أخمدت شعلة إبراقها % % و سكنت ضجة إرعادها % % 3(@)(@@) % و أضحت الأغصان قد نظمت % % غرائب الحلي بأجيادها % % 4(@)(@@) % و أوجه الأيام مبيضة % تخبر عن رقة أكبادها % % 5(@)(@@) % و العيش في طيب أثانينها % % إذا تفكرت وآحادها % % 6(@)(@@) % و قد صفت بالزهر المجتلى % % موارد الراح 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms76# لورادها % % 7(@)(@@) % فزر بنا سوداء مصفودة % في غمرة الماء بأصفادها % % 8(@)(@@) % كأنها زنجية واصلت % حنينها من ضيق أقيادها % % 9(@)(@@) % إذا نضى الصبح سواد الدجى % % لم ينض عنها سود أبرادها % % 10(@)(@@) % طريق من خاف لها لجة % يقطع في أحشاء أولادها % % PageV01P304 البحر : - 1(@)(@@) % ينافسني في الشعرو الشعر كاسد % حسود كبا عن غايتيو معاند % 2(@)(@@) % و كل غبي لو يباشر برده % لظى النار أضحى حرهاو هو بارد % 3(@)(@@) % إذا سئلوا عما يلوح تبلدوا % % كأنهم عند السؤال جلامد % 4(@)(@@) % قيام يهزون النسوعكأنما % % بأيديهم حيات رمل أساود % 5(@)(@@) % يموت ذكاء الطفل ما دام عندهم % و كيف صلاح الفرع والأصل فاسد % 6(@)(@@) % أفيقوا فلن يعطى القريض معلم % و هل يتولى الأغبياء عطارد % 7(@)(@@) % فلا تمنحوا منه الكرام قلائدا % فليس من الحصباء تهدى القلائد % PageV01P305 البحر : - 1(@)(@@) % يا دهرصافيت اللئام مساعدا % % لهمو جانبت الكرام معاندا % % 2(@)(@@) % فغدوت كالميزان يرفع ناقصا % فيناو يخفضلا محالةزائدا % % PageV01P306 البحر : - 1(@)(@@) % أقول لحنان العشي المغرد % يهز صفيح البارق المتوقد % 2(@)(@@) % تبسم عن ري البلاد حبيه % % و لم يبتسم إلا لإنجاز موعد % 3(@)(@@) % على الشرف المعمور بالعمرفالربا % % فتلك الثنايافالطريق المعبد % 4(@)(@@) % فسود الليالي من بنية جعفر % فدمنة آثار الخليفة أحمد % 5(@)(@@) % بصفحة مصقول الأديمكأنما % % سفائنه ربد النعام المشرد % 6(@)(@@) % شوائل أذناب يخيل أنها % % عقارب دبت فوق صرح ممرد % 7(@)(@@) % فمشهد عمرو حيث يلعن ظالم % و تبكي على المظلوم آل محمد % 8(@)(@@) % محل الهوى العذري في غير حلة % و عهد الشباب الغض في غير معهد % 9(@)(@@) % مضت نومة التعريس في ظل أمنه % و أعقبها ليل السليم المسهد % 10(@)(@@) % أمج له العذب النميركأنه % % مجاجة محمر الحماليق أسود % PageV01P307 11(@)(@@) % و لا وصل إلا أن أروح مغررا % بأدهم في تيار أخضر مزبد % 12(@)(@@) % إذا ما أهل الركب فيه جرى لهم % % على سنن كالمشرفي المجرد % 13(@)(@@) % إذا ما ارتدى الليل البهيمفإنني % % بليلين منه والدجنة مرتدي % % 14(@)(@@) % أرى بلدا يشكو من الماء مثل ما % % شكا الغمد من حد الحسام المهند % 15(@)(@@) % تحيف غربي القصور كأنما % % رمين على الأيام منه بمبرد % 16(@)(@@) % مكفرة الجدران للمد لا تني % % تخر عليه من ركوع وسجد % 17(@)(@@) % و عهدي بها مثل الفراقد تنتضى % % ذوائبها ما بين نسر وفرقد % 18(@)(@@) % بقية أبشار البناء كأنما % % تصوغ لها الآصال تيجان 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms77# عسجد % 19(@)(@@) % فيا سطوة الأيام عودي لسلمها % % كما كنت قبل اليوم مغلولة اليد % 20(@)(@@) % و يا جانبيها بالمناخ سقيتما % % بأعذب مما يسقيان وأبرد % PageV01P308 21(@)(@@) % و يا ديرها الشرقي لازال رائح % يحل عقود المزن فيك ويغتدي % % 22(@)(@@) % موارد لهو صفقت في ظلالها % % موارد من ماء الكروم مورد % 23(@)(@@) % عليلة أنفاس الرياحكأنما % % يعل بماء الورد نرجسها الندي % % 24(@)(@@) % يشق جيوب الورد في شجراتها % % نسيم متى ينظر إلى الماء يبرد % 25(@)(@@) % و ملعب إفرندية الروض يعتلي % % عليه خلوقي البناء المشيد % 26(@)(@@) % صوامع في سرو أناف كأنها % % قباب عقيق في قباب زبرجد % PageV01P309 البحر : - 1(@)(@@) % أجر المدام على نجح المواعيد % و جد علي بريا النحر والجيد % 2(@)(@@) % فقد تنبه من إغفائه زهر % كأن رياه ريا المسك والعود % 3(@)(@@) % و شرد الصبح عنا الليلفاتضحت % سطوره البيض في راياته السود % 4(@)(@@) % و لاح للعين نارنج كما اختضبت % بالزعفران ثدي النهد الغيد % PageV01P310 البحر : - 1(@)(@@) % دونكها نرجسية الجسد % على أفانين مسمع غرد % 2(@)(@@) % فقد حلا النرجس الجني لنا % % عن عيشة في قدومهرغد % 3(@)(@@) % يجمع ضدين قل ما اجتمعا % % من لهب ساطع ومن برد % 4(@)(@@) % فهو كشهل العيونمن كثب % و هو كزهر النجوم من بعد % 5(@)(@@) % أظن نجل العيون تحسده % % فهي مراض من شدة الحسد % 6(@)(@@) % قد قلتإذ أنجد الزمان به % % كتائب اللهوغير متئد % 7(@)(@@) % أهلا بما أمرض العيونفما % % تفرق من دائها مدى الأبد % PageV01P311 البحر : - 1(@)(@@) % إزدد من الراح وزد % فالغي في الراح رشد % 2(@)(@@) % يديرها ذو غنة % أغيد يثنيه الغيد % 3(@)(@@) % كأنها في كفه % جمرة نار تتقد % 4(@)(@@) % مد إليها يده % % فالتهبت إلى العضد % 5(@)(@@) % و الجو قد كادت ثري % ياه على الغرب ترد % % 6(@)(@@) % كأنها شابورة % مذهبة من الزرد % PageV01P312 البحر : - 1(@)(@@) % قصد الدهر فيك من بعد جور % و أرى الدهر فيك جورا وقصدا % % 2(@)(@@) % فاسقني كالعروس ألبسها الما % % ء وشاحا من الحباب وعقدا % 3(@)(@@) % قد ظمئنافكان ريقك وردا % و ثملنافكان خدك وردا % 4(@)(@@) % جمع الله شملنافوددنا % % أن بين الصباح والليل سدا % % PageV01P313 البحر : - 1(@)(@@) % لا سقيت حانة أترجة % غيثا و لا حانة مولودها % % 2(@)(@@) % مخضوبة بالخمر جاءت به % مختضبا من دم عنقودها % % 3(@)(@@) % تعذيبه العشاق تعذيبها % % و وعده نسخة موعودها % % 4(@)(@@) % فبظرهاإذ ولدت مثله % أولى بعقد الدر من جيدها % % 5(@)(@@) % كنت لها صيدا 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms78# و لكنني % % أفلت من ورطة سفودها % % PageV01P314 البحر : - 1(@)(@@) % و حية في رأسها درة % تسبح في بحر قصير المدى % % 2(@)(@@) % إن هي غابتفالعمى ظاهر % و إن بدت بان طريق الهدى % % PageV01P315 البحر : - 1(@)(@@) % تقربت من هذي القوارب راكبا % وياليتني منهاالغداةبعيد % 2(@)(@@) % فبت أرى جند الحماموليس لي % % إذا اعتزلتإلا الدعاء جنود % 3(@)(@@) % تلاعب بي أمواج بحر كأنها % % شواهق بر تنثني وتميد % 4(@)(@@) % فإن أنقلب منها إلى الأرض واطئا % على الترب يوما إنني لسعيد % PageV01P316 البحر : - 1(@)(@@) % نوائب دهر مكثرات عنادها % % أجاهدها حتى أمل جهادها % % 2(@)(@@) % و ما الدهر إلا عثرة لا أقالها % % و فائدة محمودة لا أفادها % % 3(@)(@@) % و لست أرى أن ابن حسان مخبث % إذا هو أبدى عفة وأعادها % % 4(@)(@@) % أخو الظلم يخفي كيده بسكونه % كذا النار تخفي بالرماد اتقادها % % 5(@)(@@) % و كم من كتاب نمقت فيه كفه % % شهادة زور لا تساوي مدادها % % 6(@)(@@) % و مالكة إرثا حوى الإرث دونها % % و قد أملكته النائبات قيادها % % 7(@)(@@) % فراحت وما امتدت إلى الزاد كفها % % و راح رخي البال يأكل زادها % % 8(@)(@@) % فلو أن ما يأتي من الظلم ظلمة % على الأفق لم يجل الصباح سوادها % % PageV01P317 البحر : - 1(@)(@@) % لما مضى اليوم حميدا فانجرد % و نشر الليل جناحا فركد % 2(@)(@@) % دعوت فتيان الطراد والطرد % % و مارد الخضر على الصيد مرد % 3(@)(@@) % يكشر عن مثل الحرابأو أحد % يقصد في آثاره حيث قصد % % 4(@)(@@) % فاحتملوا زهر مصابيح تقد % و كل صفراء من الصفر تعد % 5(@)(@@) % حنانة في الليل من غير كمد % % كأن ماء البئر فيها يطرد % % 6(@)(@@) % يقرع للصيد يلموم الجسد % % كأنه لولا استوا الرأس وتد % % 7(@)(@@) % فتوقه الوحش صحيحا إن رقد % % حتى إذا عاينها السرب صدد % % 8(@)(@@) % مجدة تهدي له الحين المجد % بصفحة البدر ورنات الأسد % % 9(@)(@@) % فحيرت غزلانهفلم تجد % % و أقبلت تركض كالسرب الفرد % % 10(@)(@@) % ثم غشيناهن أما وولد % % و شادنا يعطي القياد من وجد % % PageV01P318 11(@)(@@) % يوردها حوض المنايا فترد % فحين لاح الفجر منصات العمد % % 12(@)(@@) % و صار بحر الليل ضحضاحا ثمد % % خلنا المدى وردا له الورد سجد % % 13(@)(@@) % و أضحت الأهب شباريق قدد % % كأنها في الروض نظما وبدد % % 14(@)(@@) % مصندلات القمص تغري و تقد % فنحن والضيفان في عيش رغد % % 15(@)(@@) % نعد للزور كريمات العدد % % فمثلنا بمثلهن 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms79# مستبد % PageV01P319 البحر : - 1(@)(@@) % أحل بعقوة الشرف التليد % و ألبس جنة الفخر العتيد % 2(@)(@@) % و أعلم أنني شرق المعادي % % ببرد شرابهو شجا الحسود % 3(@)(@@) % وأصفح والمنايا الحمر حولي % % تبرج والصواعق من جنودي % % 4(@)(@@) % أرى الآداب تصعد والقوافي % % معفرة الترائب في الصعيد % 5(@)(@@) % فيا أسفي على خلق جديد % تعز لديهأو جد سعيد % 6(@)(@@) % فليت الله أنجدها بحر % سريع عند دعوتها نجيد % 7(@)(@@) % و حجام يقول الشعر جاءت % غرائبه إلي على البريد % 8(@)(@@) % مزحت فجد في عتب تلظت % على آثاره شعل القصيد % 9(@)(@@) % فيا بعد السلامة من أكف % تغر بهن ضارية الأسود % 10(@)(@@) % فلا تبعد سيوفك من سيوف % فكم فتكت بجبار عنيد % PageV01P320 11(@)(@@) % صوارم تضرب الأعناق جهلا % و تحكم في الجياد وفي الخدود % 12(@)(@@) % تعلل من سطوت بها عليه % % بلفظ مثل تفويف البرود % 13(@)(@@) % فمن نظم تدبجه مليح ؛ % و من نثر تهذبه سديد % 14(@)(@@) % و كم تتدرج المنديل منه % % على أدراج شعرك والحديد % 15(@)(@@) % فينشده الذي حبرت فيه % % و يحلق رأسه بعد النشيد % PageV01P321 البحر : - 1(@)(@@) % شيخ لنا من شيوخ بغداد % أغذ في اللهو أي إغذاذ % 2(@)(@@) % رق طباعا ومنطقا فغدا % % و راح في المستشف كاللاذ % 3(@)(@@) % تطن تحت الأكف هامته % % إذا علتها طنين فولاذ % 4(@)(@@) % قواد إخوانهفإن ظمئوا % % سقاهم الراح سقي نباذ % 5(@)(@@) % له على الشط غرفة جمعت % كل خليع نشا ببغداذ % 6(@)(@@) % أعد فيها بنة الشباك لهم % % مقهورة الجنب وابنة الداذي % % 7(@)(@@) % و كدة من صباح قطربل % و جؤذرا من ملاح كلواذ % 8(@)(@@) % يقول للزائر الملم به % أوصل هذا ألذ أم هذي % % 9(@)(@@) % و شاعر جوهر الكلام له % % ملك فمن تارك وأخاذ % 10(@)(@@) % كأن ألفاظه لرقتها % % و حسنها خمر طير ناباذ % PageV01P322 11(@)(@@) % تصد عن نكهة له ضبت % و هي عذاب كينع آذاد % % 12(@)(@@) % كم كبد بالعراق ناجية % منهاو أخرى بجز أفلاذ % 13(@)(@@) % قل لعلي سقتك غادية % مسفة الودق ذات إرذاذ % 14(@)(@@) % فخير ما فيه أنه رجل % يخدمنيالدهرو هو أستاذي % % PageV01P323 البحر : - 1(@)(@@) % ناديك من مطر الإحسان ممطور % و مرتجيك بغمر الجود مغمور % 2(@)(@@) % و البيض ظل عليكالدهر منتشر % و النقع جيب عليكالدهرمزرور % 3(@)(@@) % و الشرك قد هتكت أستار بيضته % % بحد سيفكو الإسلام منشور % 4(@)(@@) % كم وقعة لك شبت في ديارهم % نارا و أشرق منها في الهدى 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms80# نور % 5(@)(@@) % بنهضة خر فسطاط الكفور لها % % خوفا و أذعن بالفسطاط كافور % 6(@)(@@) % إن تشتك الحدث الحسناء حادثة % سعى بها حائن منهم ومغرور % 7(@)(@@) % فإنها نشوة ولت عذوبتها % % و خر ذو التاج عنهاو هو مخمور % 8(@)(@@) % يستنقص الوتر من أعدائه ملك % عدوه حيث كانالدهرموتور % 9(@)(@@) % مجاور وزرا منهو هل وزر % و السيف في يد سيف الله مشهور % 10(@)(@@) % يا من يمن على الأسرى فيأسرهم % % علما بأن طليق المن مأسور % PageV01P324 11(@)(@@) % و من لديه رياض الحمد مونقة % فزهرها فيه منظوم ومنثور % 12(@)(@@) % إن تعمر السورأو تهمل عمارته % % فإنه بك ما عمرت معمور % 13(@)(@@) % محلك الغاب يحمي الليث حوزته % % فإن خلا منه يوما فهو مجذور % 14(@)(@@) % لله سور على الأيام يكلؤه % و أنتلا شك فيهذلك السور % 15(@)(@@) % حميته برماح الخط مشرعة % و كل حصن سوى أطرافها زور % 16(@)(@@) % أنت الهمام الذي من همه أبدا % جر الحديدو ذيل النقع مجرور % 17(@)(@@) % من أسرة قهروا كسرى وأسرته % % و الناس مهتضم منهم ومقهور % 18(@)(@@) % لهم من البر مصطاف ومرتبع % و محضر في ظلال الحضر محظور % 19(@)(@@) % و لا معاقل إلا كل سابغة % يطوي الفجاج سناهاو هو منشور % 20(@)(@@) % و كوكب في ذرى سمراء مغربة % إذا تمادى القنانحر وتامور % PageV01P325 21(@)(@@) % تمل فارسك المذكور في شيم % بمثلها الذكر الصمصام مذكور % 22(@)(@@) % وافى ومولده الموفي يخبرنا % % بأنه ناصر للمجد منصور % 23(@)(@@) % جرى فرند أبيه في مضاربه % % فجاء وهو حديد الحد مأثور % 24(@)(@@) % فعاش ما نشر الديجور حلته % % و ما انطوى بضياء الفجر ديجور % 25(@)(@@) % حتى نراهو حد السيف في يده % مثلم و سنان الرمح ماطور % 26(@)(@@) % إن السماحة أخلاق عرفت بها % % و المكرمات حديث عنك مسطور % 27(@)(@@) % و الدهر يا بن أبي الهيجاء يفعل ما % % أمرتهفهو منهي و مأمور % 28(@)(@@) % لو هم بأسك بالطود الذي شمخت % هضابه لهوى من بأسك الطور % PageV01P326 البحر : - 1(@)(@@) % عفر الظباء لدى الكثيب الأعفر % سفحت دموعك يوم سفح محجر % 2(@)(@@) % أقبلت بين معرض بك معرض % حذر الوشاةو ضاحك مستعبر % 3(@)(@@) % يلطمن بالبرد العقيقو إنما % % يقتص من ورد الخدود الأحمر % 4(@)(@@) % و إذا الفراق أساء في أفعاله % كانت إساءته بأحسن منظر % 5(@)(@@) % سفرت فشمت لها بوارق شيمة % وثق الهوى منها بحظ مسفر % 6(@)(@@) % ثم اكتست 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms81# خفر الحياءفخبرت % وجناتها عن ذمة لم تخفر % 7(@)(@@) % لا تنكري جزع الشجيفإنه % % لم يأت يوم الجزع منه بمنكر % 8(@)(@@) % نفر الكرى عن مقلتيه وأحدقت % بفؤاده حدق الظباء النفر % 9(@)(@@) % و لربما أغضتو في أحشائه % % ما شاء من جمر الغضا المتسعر % 10(@)(@@) % فعلى الليالي الغر يأسي أم على % % ما فات من عيش أغر مشهر % PageV01P327 11(@)(@@) % لا بد من شعث تطالع موهنا % أرض الشآم بكل أشعث أغبر % 12(@)(@@) % ما كنت آمن في المقام منيتي % % فأخافها بين القلاص الضمر % 13(@)(@@) % لما بدت رايات صبح مقبل % يخفقن في أعجاز ليل مدبر % 14(@)(@@) % و تقطرت خيل السحاب بمنزل % ركض الصبا فيه فلم يتقطر % 15(@)(@@) % ملنا فعفرنا الوجوهديانة % في الترب بين محلق ومقصر % 16(@)(@@) % متوشحين بكل أبيض مرهف % نيطت حمائله بأبيض أزهر % 17(@)(@@) % نطوي على المدح الصدورو إنما % % تطوى على أمثال يمنة عبقر % 18(@)(@@) % تلقى الأمير إلى السماح مشوقة % شوق الرياض إلى السحاب الممطر % 19(@)(@@) % ملك ثنا الآمال صفو نواله % % عن كل مطروق النوال مكدر % 20(@)(@@) % يأتيك عن فهم الثناء نواله % % عفوا و تلك سجية المستبصر % PageV01P328 21(@)(@@) % كرم تكشف عن حلى آدابه % كالبحر يكشف غمره عن جوهر % 22(@)(@@) % فكأن أيدي الشكرإذ عبثت به % % أيدي الصبا عبثت بمسك أذفر % 23(@)(@@) % لمعت بوارقهفكن سحائبا % في معشر و صواعقا في معشر % 24(@)(@@) % و غدت ملوك الأرض تخطب سلمه % % من منجد نائي المحل ومغور % 25(@)(@@) % حلاهم مننا فحلوا باسمه % يوم العروبة كل ذروة منبر % 26(@)(@@) % و رأوه شمسا في غمامة نائل % تهميو بدرا في دجنة عثير % 27(@)(@@) % عم السباسب بالكتائب والقنا % % ببنانه في كل قاع مقفر % 28(@)(@@) % و أقام يقظان العزيمة ساهرا % بالثغر يكلأ نائما لم يسهر % 29(@)(@@) % موف على قمم المكارمموقد % نيرانها للطارق المتحير % 30(@)(@@) % ما شمر الأعداء إلا راعهم % % بنهوض أروع للقاء مشمر % PageV01P329 31(@)(@@) % سالوا فسال عليهم مطر الردى % % من كل أجرد سابح متمطر % 32(@)(@@) % و دنوافلم تنب القنا عن جنة % منهمو لا نبت الظبا عن مغفر % 33(@)(@@) % حتى انثنى والخيل تسحب فوقهم % % بالركضأردية العجاج الأكدر % 34(@)(@@) % لو أن مصطلما بكته رمة % لبكتهم في الترب رمة قيصر % 35(@)(@@) % أعلى لا زالت علاك سوافرا % تختال بين مثقف ومذكر % 36(@)(@@) % فلقد جريت أمام تغلب سافرا % جري السنان أمام لدن الأسمر 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms82# % 37(@)(@@) % شرفا تبين قبابه مضروبة % في كل مبدى للفخار ومحضر % 38(@)(@@) % و مكارما يسعى إليهن المنى % % سعي الحجيج إلى الصفا والمشعر % 39(@)(@@) % موصولة بشمائل الأدب التي % % إن فاخرت جاءت بأفضل مفخر % 40(@)(@@) % إن السماح موارد مخصوصة % بالحمد بين ورودها والمصدر % PageV01P330 41(@)(@@) % و أعلها ما كان عذبا سائغا % حفت مناهله بروض أخضر % 42(@)(@@) % آليت لا أهدي كرائم منطقي % % إلا إلى الملك الكريم العنصر % 43(@)(@@) % من كل مشرقة النظام تلألأت % فحكت نظام اللؤلؤ المتخير % 44(@)(@@) % عبقتو قد فصلتها بخلاله % حتى كأن فصولها من عنبر % 45(@)(@@) % و دعت ينابيع الندى فتفجرت % كرما على ينبوعها المتفجر % 46(@)(@@) % كثرت محاسنهاو قل كلامها % % فأتتك تخبر عن مقل مكثر % PageV01P331 البحر : - 1(@)(@@) % أغرتك الشهاب أم النهار ؛ % و راحتك السحاب أم البحار % 2(@)(@@) % خلقت منية ومنىفأضحت % تمور بك البسيطة أو تمار % 3(@)(@@) % تحلي الدينأو تحمي حماه % % فأنت عليه سور أو سوار % 4(@)(@@) % سيوفك من شكاة الثغر برء % و لكن للعدا فيها بوار % 5(@)(@@) % و كفاك الغمام الجود يسري % % و في أحشائه ماء ونار % 6(@)(@@) % يسار من سجيتها المنايا % % و يمنى من عطيتها اليسار % 7(@)(@@) % عصفت بحاتم كرما فأضحى % % و جل فعاله المشهور عار % 8(@)(@@) % فقد شهدتو ما حابتك طي % بأن الجود معدنه نزار % 9(@)(@@) % يحف الوفد منك بأريحي % تحف به السكينة والوقار % 10(@)(@@) % و سيف من سيوف الله مغرى % % بسفك دما العدامنه الفرار % PageV01P332 11(@)(@@) % و بدر ما استسر البدرإلا % % تعالى أن يحيط به السرار % 12(@)(@@) % حضرناو الملوك له قيام % تغض نواظرا فيها انكسار % 13(@)(@@) % و زرنا منه ليث الغاب طلقا % و لم نر قبله ليثا يزار % 14(@)(@@) % فكان لجوهر المجد انتظام ؛ % و كان لجوهر الحمد انتثار % 15(@)(@@) % بعثت إلى الثغور سحاب عدل % و بذل لا يغب له انهمار % 16(@)(@@) % و أسكنت السكينة ساحتيها % % فقرت بعدما امتنع القرار % 17(@)(@@) % و علمت النفير بها رجالا % عداهم عن عدوهم نفار % 18(@)(@@) % و فضت على عدوهمفقلنا % % أفاض البحر أم سح القطار % 19(@)(@@) % مكارم يعجز المداح عنها % % فجل مديحهم فيها اختصار % 20(@)(@@) % فعشت مخيرا أعلى الأماني % % و كان على العدو لك الخيار % PageV01P333 21(@)(@@) % و ضيفك للحيا المنهل ضيف % و جارك للربيع الطلق جار % PageV01P334 البحر : - 1(@)(@@) % تذكر نجدا فحن ادكارا % % و أرقه البرق لما استطارا % % 2(@)(@@) % أماتت صبابته 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms83# صبره % % و كان يرى أن يموت اصطبارا % % 3(@)(@@) % و جار الهوى فاستجار الدموع % إذا لم يجد غيرها مستجارا % % 4(@)(@@) % وقفنافكم خفر عارض % يعصفر ورد الخدود احمرار % % 5(@)(@@) % و أدم إذا رام ظلم الفراق % % عذن بفيض الدموع انتصارا % % 6(@)(@@) % يجدن علي بأجيادهن % و يبدين لي الورد والجلنارا % % 7(@)(@@) % و إن أعر من سلوة أو أحد % عن الرشد لم يكسني الغي عارا % % 8(@)(@@) % فغدر المحب سواد العذار % إذا خلع الحب منه العذارا % % 9(@)(@@) % و حاشا لغاوي الصبا أن يقال % عصى غيه وأطاع الوقارا % % 10(@)(@@) % و بكر إذا جنبتها الجنوب % حسبت العشار تؤم العشارا % % PageV01P335 11(@)(@@) % ترى البرق يبسم سرا بها % % إذا انتحب الرعد فيها جهارا % % 12(@)(@@) % إذا ما تنمر وسميها % % تعصفر بارقهافاستطارا % % 13(@)(@@) % يعارضها في الهواء النسيم % فينشر في الروض درا صغارا % % 14(@)(@@) % تكاد تسير إليه الرياض % إذا اطرد الماء فيهافسارا % % 15(@)(@@) % فطورا تشق جيوب الحياء ؛ % و طورا تسح الدموع الغزارا % % 16(@)(@@) % كأن الأمير أعار الربا % % شمائله فاشتملن المقارا % % 17(@)(@@) % هو الغيث تغنى به بلدة % و أخرى تحن إليه افتقارا % % 18(@)(@@) % أياد سحائبها ثرة % تفيض رواحا وتهمي ابتكارا % % 19(@)(@@) % و باع إذا طال يوم اللقاء % % غادر أعمار قوم قصارا % % 20(@)(@@) % و لن يرهب السيف حتى يرى % % على صفحة السيف ماء ونارا % % PageV01P336 21(@)(@@) % أبا الحسن اخترت حسن الثناء % و مثلك من يحسن الاختيارا % % 22(@)(@@) % و كم قد وطئت ديار العدا % % على الرغم منهمفجست الديارا % % 23(@)(@@) % بخيل تمد عليها الدجى % % و بيض ترد عليها النهارا % % 24(@)(@@) % و أطلعت فيها نجوم القنا % % فليست تغورإذا النجم غارا % % 25(@)(@@) % و يوم المدائنإذ زرتها % % و قد منعتها الظبا أن تزارا % % 26(@)(@@) % و خاضت جيادك فيها الدماء % و من قبل جاءت تثير الغبارا % % 27(@)(@@) % فلو أن كسرى بإيوانها % % لأهدت سطاك إليه انكسارا % % 28(@)(@@) % سقيت الرماح دما فانثنت % نشاوى كأن قد شربن العقارا % % 29(@)(@@) % يقصرن إذ طلن خطو العدا % % و يبدين في كل نحر عثارا % % 30(@)(@@) % و كم من ملوك تواعدتهم % % على النأي منهمفماتوا حذارا % % PageV01P337 31(@)(@@) % جريتفأنضيت شأو الرياح % و جاوزت في السبق من أن تجارى % % 32(@)(@@) % نأيتفأصبحت جار الفرات % و كنت لدجلةمن قبلجارا % % 33(@)(@@) % فقد عذن منك بمستلئم % يبيح التليد ويحمي الذمارا % % 34(@)(@@) % بغيث يجودإذا الغيث ضن % و ليث يثورإذا النقع ثارا 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms84# % % 35(@)(@@) % و أغلب إن سار في تغلب % سمعت لسمر الرماح اشتجارا % % 36(@)(@@) % تغار عليه قوافي المديح % فيأبينإن ريتإلا ابتدارا % % 37(@)(@@) % و حق لقافية لم تكن % مآثره حليها أن تغارا % % 38(@)(@@) % لأذكرني بشره عارض % أضاء دجى الليل حتى أنارا % % 39(@)(@@) % و مر على الروض مر الخليع % يغنيو يسحب فيه الإزارا % % 40(@)(@@) % فأيقنت أن سأطيع النوى % % و أعصي الهوى صائرا حيث صارا % % PageV01P338 41(@)(@@) % دعتك الثغورو قد عاينت % حماما مطلا وحتفا بوارا % % 42(@)(@@) % و صادف بعدك وفد الثناء % % وردا ثمادا وربعا قفارا % % 43(@)(@@) % يقولون إن طرقت أزمة % أأنجد ذاك الندى أم أغارا % % 44(@)(@@) % فليس المحل محلا لهم % % إذا فقدوكو لا الدرا دارا % % PageV01P339 البحر : - 1(@)(@@) % قليل لها أن يتبع الدمع غيرها % % و قد أزمعتيوم الفراقمسيرها % % 2(@)(@@) % شفا كمدي أنس الظباءو إنما % % عرت فرقة شتى الظباء نفورها % % 3(@)(@@) % و ما عاقنييوم العقيق عن الجوى % % سفور دمى أبدت لبين سفورها % % 4(@)(@@) % إذا ردها كر العناق عواطلا % من الحلي حلت بالدموع نحورها % % 5(@)(@@) % غدا الشوق في الأحشاء ثاني عطفه % غداة ثنت أعطافها وخصورها % % 6(@)(@@) % دعتني إساءات الخطوب إلى السرى ؛ % و كم من سرى أهدت لنفس سرورها % % 7(@)(@@) % فبحت بما استودعت صدري من الهوى ؛ % و باحت بما استودعت منه صدورها % % 8(@)(@@) % فبعت وصالا لا أمل أصيله % % بأيام هجر لا أمل هجيرها % % 9(@)(@@) % لقد حاولت سلم الأمير عداته % % لتحمد في سلم الأمير أميرها % % 10(@)(@@) % فزارته من أعلى الصعيدو قد ثنى % % إليها عنان السير كيما يزورها % % PageV01P340 11(@)(@@) % مطل على أرض العراق بعزمة ؛ % و ثاو بأرض الشام يحمي ثغورها % % 12(@)(@@) % معد ليوم الروع بيضا تذكرت % ظباء الأعاديفاستقالت ذكورها % % 13(@)(@@) % و سمرا تثنى في الطعان كأنها % % نشاوى سقتها الأندرينخمورها % % 14(@)(@@) % فقد تاركته الترك لما تأملت % سطاهو لو لاقته لاقت مبيرها % % 15(@)(@@) % أزارهم أسد العرين خوادرا % تردد في غاب الرماح زئيرها % % 16(@)(@@) % كتائب لو لاقين كسرى و قد سمت % لإيوان كسرى غادرته كسيرها % % 17(@)(@@) % و رامت حماة الروم لقياهفاغتدت % مواقفهايوم اللقاءقبورها % % 18(@)(@@) % أمال إليهم أوجه الخيل آلفا % سراها إلى أوطانهم وبكورها % % 19(@)(@@) % و جاءهم في الريح ريا عجاجة % تبث الصبا كافورها وعبيرها % % 20(@)(@@) % فحل بنصل السيف لؤلؤ تاجها % % و حط بأطراف الرماح سريرها % % PageV01P341 21(@)(@@) % و شن على الحور الكواعب غارة % أغار بها غيد النساء 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms85# وحورها % % 22(@)(@@) % فإن تطغ يوما عاينت منه حتفها ؛ % و إن تستجر يوما أضلت مجيرها % % 23(@)(@@) % و كم حومة حامت عقاب لوائها % % عليك ونار الحرب تذكي سعيرها % % 24(@)(@@) % و شاهقة يحمي الحمام سهولها % % و تمنع أسباب المنايا وعورها % % 25(@)(@@) % إذا سترت غر السحابو قد سرت % جوانبهاخلت السحاب ستورها % % 26(@)(@@) % و إن عاد خوفا من سيوفك ربها % % بدرتها أضحى لديك أسيرها % % 27(@)(@@) % مقيم تمر الطير دون مقامه % % فليس ترى عيناه إلا ظهورها % % 28(@)(@@) % ثنيت إلى غاياتها الأسدفانثنت % تساور بالبيض الصوارم سورها % % 29(@)(@@) % و آثرت بالعدل الخلافةفاعتلى % % سناهاو كاد الجور يخمد نورها % % 30(@)(@@) % بعثت إليها تغلب ابنة وائل % فكانتو قد عم الظلامبدورها % % PageV01P342 31(@)(@@) % فإن تدع دون الأولياء لنصرة % علي بن عبد اللهتدع نصيرها % % 32(@)(@@) % أتتك القوافي ظامئات إلى الندى % % فأوردتها عذب المياه نميرها % % 33(@)(@@) % و عادت بكفء منك يكثر مهرها % % و قد عدمت أكفاءها ومهورها % % 34(@)(@@) % فأيقنت بالنجح الذي كنت أرتجي % % لديكو عاينت المنى وغرورها % % PageV01P343 البحر : - 1(@)(@@) % ما ضر ليلتنا بسفح محجر % لو باعدت سفر الصباح المسفر % 2(@)(@@) % بات العناق يهز من أعطافنا % % غصنين في ورق الشباب الأخضر % 3(@)(@@) % إلفان وردهما المدام على الظما % % و جناهما زهر الحديث الأزهر % 4(@)(@@) % لا تنكري خفقان قلب خافق % نفرت به غيد الظباء النفر % 5(@)(@@) % شرفا من الأيام يوما صالحا % شفيا به حر الجوى المتسعر % 6(@)(@@) % لله صادرة اللياليإنها % % صدرت بطيب العيش أسرع مصدر % 7(@)(@@) % عندي لها نفس المشوقإذا جرت % خطراتهن وأنة المتذكر % 8(@)(@@) % و لرب ساق توجت يده يدي % % بإناء ياقوت المدام الأحمر % 9(@)(@@) % و غريرة جاهرت غيران الهوى % % بوصالهافنعمت غير مغرر % 10(@)(@@) % أيام كان رداي يفضل قامتي % % فتذاك في عرف الصبا والمنكر % PageV01P344 11(@)(@@) % و حدائق يسبيك وشي برودها % % حتى تسب لها سبائب عبقر % 12(@)(@@) % يجري النسيم خلالهاو كأنما % % غمست فضول ردائه في العنبر % 13(@)(@@) % باتت قلوب المحل تخفق بينها % % كخفوق رايات السحاب الممطر % 14(@)(@@) % من كل نائي الحجرتين مقنع % بالبرق داني الطرتين مشهر % 15(@)(@@) % يحدى بألسنة الرعود عشاره % % فتسير بين مغرد ومزمجر % 16(@)(@@) % طارت عقيقة برقهفكأنما % % صدعت ممسك غيمه بمعصفر % 17(@)(@@) % فالروض بين مزنر ومدنر % فيهاو بين مسير ومحبر % 18(@)(@@) % و الغدرفي أرجائهمصقولة % مثل الدراهم أشرقت في منثر % 19(@)(@@) % و كأنما عرضت لزاهر زهرها % % كف الأمير بعارض 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms86# متعنجر % 20(@)(@@) % ملك إذا ما مد خمس أنامل % في الجود فاض بهن خمسة أبحر % PageV01P345 21(@)(@@) % تلقاه يوم الروع فارس معرك % ضنك و يوم السلم فارس منبر % 22(@)(@@) % تبكي سحائبه ويضحك بشره % فنواله من ضاحك مستعبر % 23(@)(@@) % متفرع من دوحة عدوية % هي والسماح تفرعا من عنصر % 24(@)(@@) % جبر الولي نوالهو تناهبت % أسيافه جبرية المتجبر % 25(@)(@@) % مثل الشهاب أضاء حلة معشر % بحريقهو أصاب حلة معشر % 26(@)(@@) % شرف يقول لمن يناوئهاكتئب % و على يقول لمن يجاريهاخسر % 27(@)(@@) % و يد تساوى الناس في معروفها % % فيد المقل تناله والمكثر % 28(@)(@@) % يا تغلب الغلباء طلت بطوله % % و نجاره قمم الكواكبففخري % % 29(@)(@@) % بمطوق طوق المحامدساحب % برد المكارمبالثناء مسور % 30(@)(@@) % و أغر مغرى بالصفوف يشقها % % و ظبا السيوف يشق جيب المغفر % PageV01P346 31(@)(@@) % كر أعل سلاحهفضرابه % % بمثلم وطعانه بمكسر % 32(@)(@@) % غمرتأبا الهيجاءربعك نعمة % موصولة بك عمر سبعة أنسر % 33(@)(@@) % و سقتك طيبة النسيمكأنما % % تهمي عليك بها حياض الكوثر % 34(@)(@@) % أسهرت ليليإذ عتبتفلم أذق % غمضا و من تعتب عليه يسهر % 35(@)(@@) % لو لم تكن متنكرا لي لم أكن % % لاذم صرف الحادث المتنكر % 36(@)(@@) % و إذا رميت بعتب مثلك خانني % % جلديفلم أصبر ولم أتصبر % 37(@)(@@) % أنسيت غر مدائح حليتها % % بعلاكباقية بقاء الأدهر % 38(@)(@@) % تغدو عليك من الثناء بناهد % معشوقة و تروح منك بمعصر % 39(@)(@@) % بدع تضوع نشرهافكأنما % % كتبت صحائفها بمسك أذفر % 40(@)(@@) % هذا ولم أجن القبيحفأجتبي % % غضبا و لم أهجر لديك فأهجر % PageV01P347 41(@)(@@) % بل قد ركبت من الذنوب عظيمها % % و رجوت عفوك فاعف عني واغفر % 42(@)(@@) % فلقد تعمد ثغرتي بسهامه % % واش تعمدني بقبح المحضر % 43(@)(@@) % يا سيد الأمرا دعوتك شاكرا % إن تعط أو تحرمصنيعك يشكر % 44(@)(@@) % و مظفر بندى يديكو لو غدا % % بالحمد غيرك عاد غير مظفر % 45(@)(@@) % أذكى له المريخ جمر نحوسه % % و تغيبت عنه سعود المشتري % % 46(@)(@@) % نوب أطلن عليه شعلة أبيض % عضب المضاربأو شرارة أسمر % 47(@)(@@) % و رمت به شقراء تحسب بردها % % ينقد من شية الجواد الأشقر % 48(@)(@@) % ترمي بمحمر الشراركأنما % % ترمى جوانبها بورد أحمر % 49(@)(@@) % خلعت عليه من الحرير يلامقا % صفرا فبين محلل ومزرر % 50(@)(@@) % فالدهر يعجب منه لما مسه % % بجهنم الصغرى فلم يتفطر % PageV01P348 51(@)(@@) % هي وعكة كانت ثقاف مقوم % لدن المهزة أو صقال مذكر % 52(@)(@@) % تاج كبدر التم عاد 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms87# ضياؤه % بعد الكسوف فراق عين المبصر % 53(@)(@@) % أو كالحسام جلا الصياقل متنه % حتى ترقرق منه ماء الجوهر % 54(@)(@@) % إن النضارإذا تتابع سبكه % خلص النضارو زاد نضرة منظر % 55(@)(@@) % فليكمد الأعداءأو فليحمدوا % % إذ قدروا فيه الذي لم يقدر % PageV01P349 البحر : - 1(@)(@@) % لحظ عينيك للردى أنصار % و سيوف شفارها الأشفار % 2(@)(@@) % فتكت بالمحب من غير ثأر % فلها في فؤاده آثار % 3(@)(@@) % وقعة باللوى استباحت نفوسا % قمرتها غراءها الأقمار % 4(@)(@@) % و مها تكتم البراقع منها % % صورا هن للعيون صوار % 5(@)(@@) % أعرب البان بينهنفمن أث % ماره الياسمين والجلنار % 6(@)(@@) % قد صرفنا الأبصار عنهن خوفا % إذ رمتنا بلحظها الأبصار % 7(@)(@@) % هاتها لم تباشر النارو اعلم % أنها في المعاد للشرب نار % 8(@)(@@) % قصرت ليلة الخورنق حسنا % و الليالي الطوال فيه قصار % 9(@)(@@) % بكر ترتعي جنى اللهو غضا % و اللذاذات بينها أبكار % 10(@)(@@) % إذ وجوه الأيام فيه رياض % و مياه السرور فيه خمار % PageV01P350 11(@)(@@) % وجنات تحير الورد فيها % % و ثغور جرت عليها العقار % 12(@)(@@) % كلما كرت الجباه بصبح % عطفت ليلها عليه الطرار % 13(@)(@@) % فضحاه من الذوائب ليل ؛ % و دجاه من الخدود نهار % 14(@)(@@) % غنيت عن سحائب المزن أرض % هن من راحة الأمير تمار % 15(@)(@@) % ظلها سجسج و زهر رباها % % عطر و الحيا بها مدرار % 16(@)(@@) % حيث لا وردنا ثماد و لا الوع % % د غرور و لا الهجوع غرار % 17(@)(@@) % يتصدى لظاهر البشر طلق ال % % وجهفيه سكينة ووقار % 18(@)(@@) % لا يصد الثناء عنهولا تر % غب عن ورده النفوس الحرار % 19(@)(@@) % سائل الديلمي كيف رأى سن % جار لما تنمرت سنجار % 20(@)(@@) % إذ تلاقى بأرضها الحطب الجز % ل ونار يحثها إعصار % PageV01P351 21(@)(@@) % معشر أصبحوا وجودا و أمسوا % % عدما و الخطوب فيها اعتبار % 22(@)(@@) % لم يسر حينهم إليهمو لكن % زجروا نحوه الجياد وساروا % % 23(@)(@@) % خطرت بالقنا الأسود عليهم % % فارتوى منهم القنا الخطار % 24(@)(@@) % في برار تكشف النقع عنها % % و هي من رونق الحديد بحار % 25(@)(@@) % موقف لو أطل كسرى عليه % % لانثنى كاسفا وفيه انكسار % 26(@)(@@) % جبر الملك فيه جبار حرب % رافع من لوائه الجبار % 27(@)(@@) % أسد في الحديد تستوحش الأس % د لديهو يأنس الزوار % 28(@)(@@) % قبح الضرب في الوجوه ولكن % % حسنت عن سيوفك الأخبار % 29(@)(@@) % و تحلت بك المدائححتى % % هي شدو القيان والأسمار % 30(@)(@@) % و 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms88# اشرأبت لك الديارفلو تس % % طيع سيرا سرت إليك الديار % PageV01P352 31(@)(@@) % نعم للسيوف لا ينفد الشك % ر عليهاأو تنفد الأعمار % 32(@)(@@) % أبرأتنا كما أبارت عدانا % % فهي فينا برء و فيهم بوار % 33(@)(@@) % قد أطاعتك في العدو المنايا % % و جرت بالمنى لك الأقدار % 34(@)(@@) % لا تقد جحفلا فأنت من النج % % دة والبأس جحفل جزار % 35(@)(@@) % أيها اللائمي على صون وجهي % % إن بذل الوجوه شين وعار % 36(@)(@@) % أملي في الملوك عسر و لكن % أملي في أبي المرجى اليسار % PageV01P353 البحر : - 1(@)(@@) % مرضت جفونك والحتوف شعارها % % هن السيوف شفارها أشفارها % % 2(@)(@@) % جاورت من شيم الكواعب في الهوى % % من لا يجار من الصبابة جارها % % 3(@)(@@) % لله موقفنا بمنعرج اللوى % % و محارنا في لوعة ومحارها % % 4(@)(@@) % نضت البراقع عن محاسن روضة % ريضت بمحتفل الحيا أنوارها % % 5(@)(@@) % فمن الثغور المشرقات لجينها % % و من الخدور المذهبات نضارها % % 6(@)(@@) % مصقولة بسنا الصباح جباهها % % مصبوغة بدجى الظلام طرارها % % 7(@)(@@) % أغصان بان أغربت في حملها % % فغرائب الورد الجني ثمارها % % 8(@)(@@) % طالت ليالي الحب بعد فراقها % % و أحبهن إلى المحب قصارها % % 9(@)(@@) % و لرب ليلات بهن تفرجت % أسدافها وتأرجت أسحارها % % 10(@)(@@) % ما كان ذاك العيش إلا سكرة % رحلت لذاذتها وحل خمارها % % PageV01P354 11(@)(@@) % الله أكبر فرق السيف العدا % % فتفرقت أيدي سبا أخبارها % % 12(@)(@@) % لا تجبر الأيام كسر عصابة % كسرت وذل بجابر جبارها % % 13(@)(@@) % رحلتفكان إلى السيوف رحيلها % % و ثوتفكان على الحتوف قرارها % % 14(@)(@@) % سجرت بحارهم دما فتيقنت ؛ % أن الأسود عرينها سنجارها % % 15(@)(@@) % برزت لها أسد الرهاإذ حوصرت % و الأسد تأنف أن يطول حصارها % % 16(@)(@@) % ثبتوا إلى أجدارهافكأنهم % % و الطعن يقتلع الكماةجدارها % % 17(@)(@@) % مستعصمين من الأمير بهضبة % عدوية لا ترتقى أوعارها % % 18(@)(@@) % يغشون قارعة القراع بأوجه % ألفت مباشرة القنا أبشارها % % 19(@)(@@) % علم الأعاجم أن وقع سيوفكم % نار تشبو أنتم إعصارها % % 20(@)(@@) % من ذا ينازعكم كريمات العلى % % و هي البروجو أنتم أقمارها % % PageV01P355 21(@)(@@) % الحرب تعلم أنكم آسادها ؛ % و الأرض تعلم أنكم أمطارها % % 22(@)(@@) % هي وقعة لك عزها وسناؤها % % و على عدوك نارها وشنارها % % 23(@)(@@) % ركب السفين مشرقا في معشر ؛ % من قال تغرب خيفة أبصارها % % 24(@)(@@) % موتورة بشبا الأسنة لو بغت % وترا إليك تضاعفت أوتارها % % 25(@)(@@) % عمرت ديارك من قبور ملوكهم % % و خلت من الأنس المقيم ديارها % % 26(@)(@@) % وردت 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms89# بآساد الشرى مبيضة % أفعالهامحمرة أظفارها % % 27(@)(@@) % و السمر قد خضب الطعان صدورها % % فكأنها قد أذهبت أشطارها % % 28(@)(@@) % و المرهفات جميلة أفعالها % % في الملك غير جميلة آثارها % % 29(@)(@@) % فلتشكرنك دولة جددتها % % فتجددت أعلامها ومنارها % % 30(@)(@@) % حليتها وحميت بيضة ملكها % % فغرار سيفك سورها وسوارها % % PageV01P356 31(@)(@@) % و غريبة تجري عليك رياحها % % أرجا إذا لفحت عدوك نارها % % 32(@)(@@) % ممن له غرر الكلام تفتحت % أبوابهاو ترفعت أستارها % % 33(@)(@@) % تجري وتطلبه عصائب قصرت % عن شأوهفقصارها أقصارها % % 34(@)(@@) % يحوي له الأسد البعيد نجاره % و يعوقها عما حواه نجارها % % 35(@)(@@) % فتعيش بعد مماته أشعاره ؛ % و تموت قبل مماتها أشعارها % % PageV01P357 البحر : - 1(@)(@@) % أكف تغلب أنواء الحيا الجاري ؛ % و نار بأسهم أذكى من النار % 2(@)(@@) % و الحمد حلي بني حمدان تعرفه ؛ % و الحق أبلج لا يلقى بإنكار % 3(@)(@@) % قوم إذا نزل الزوار ساحتهم % % تفيؤوا ظل جنات وأنهار % 4(@)(@@) % مؤمرونإذا ثارت قرومهم % أفضت إلى الغاية القصوى من الثار % 5(@)(@@) % فكل أيامهم يوم الكلابإذا % % عدت وقائعهمأو يوم ذي قار % 6(@)(@@) % تتابعت بركات الله نازلة % على أبي البركات المانع الجار % 7(@)(@@) % على الحيا الغمر والبحرالذي رسبت % فيه جواهرهو الضيغم الضاري % % 8(@)(@@) % على الأمير الذي أضحت مناقبه % % مثل النجومتضيء الليل للساري % % 9(@)(@@) % إذا عزمت على إحصائها ازدحمت % فكاثرت مدحي فيهو إكباري % % 10(@)(@@) % و هل يقاس فضاء البحر منحرفا % بأذرع قصرت عنه وأشبار % PageV01P358 11(@)(@@) % أصبحت أظهر شكرا عن صنائعه % % و أضمر الود فيها أي إضمار % 12(@)(@@) % كيانع النخل يبدي للعيون ضحى % % طلعا نضيدا و يخفي غض جمار % 13(@)(@@) % أأكرم الناس إلا أن تعد أبا % فات الكرام بآباء وآثار % 14(@)(@@) % أشكو إليك حليفي غارة شهرا % % سيف الشقاق على ديباج أشعاري % % 15(@)(@@) % ذئبين لو ظفرا بالشعر في حرم % لمزقاه بأنياب وأظفار % 16(@)(@@) % سلا عليه سيوف البغي مصلتة % في جحفل من شنيع الظلم جرار % 17(@)(@@) % و أرخصاهفقل في العطر منتهبا % لديهمايشترى من غير عطار % 18(@)(@@) % لطائم المسك والكافور فائحة % منهومنتهب الهندي والغار % 19(@)(@@) % و كل مسفرة الألفاظ تحسبها % % صفيحة بين إشراق وإسفار % 20(@)(@@) % أرقت ماء شبابي في محاسنها % % حتى ترقرق فيها ماؤها الجاري % % PageV01P359 21(@)(@@) % كأنما نفس الريحان يمزجه % صبا الأصائل من أنفاس نوار % 22(@)(@@) % باعا عرائس شعري بالعراقفلا % % تبعد سباياه من عون وأبكار % 23(@)(@@) % مجهولة القدر مظلوم عقائلها % % مقسومة بين 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms90# جهال وأغمار % 24(@)(@@) % و ما يضرهماو الدر ذو خطر % إن حلياه ملوكا ذات أخطار % 25(@)(@@) % و ما رأى الناس سبيا مثل سبيهما % % بيعت نفيسته ظلما بدينار % 26(@)(@@) % إذا كساك ثياب المدح سالبها % % يوما فإنك أنت المكتسي العاري % % 27(@)(@@) % و الله ما مدحا حيا و لا رثيا % % ميتا و لا افتخرا إلا بأشعاري % % 28(@)(@@) % إن توجاك بدر فهو من لججي ؛ % أو ختماك بياقوت فأحجاري % % 29(@)(@@) % هذاو عندي من لفظ أشعشعه % سلافة ذات أضواء وأنوار % 30(@)(@@) % كريمة ليس من كرم و لا التثمت % عروسها بخمار عند خمار % PageV01P360 31(@)(@@) % تنشو خلال شغاف القلبإن نشأت % ذات الحباب خلال الطين والقار % 32(@)(@@) % لم يبق لي من قريض كان لي وزرا % على الشدائدإلا ثقل أوزاري % % 33(@)(@@) % أراه قد هتكت أستار حرمته % % و سائر الشعر مستور بأستار % 34(@)(@@) % كأنه جنة راحت حدائقها % % من الغبيين في نار وإعصار % 35(@)(@@) % عار من النسب الوضاح منتسب % في الخالدية بين الذل والعار % 36(@)(@@) % و ما أظن دعي الأرد ينصفني % % حتى تموج به أمواج تياري % % 37(@)(@@) % غضبانيستر عني وجهه بيد % وددت لو سمرت فيه بمسمار % 38(@)(@@) % لقد تحيف شعري معشر عرر % منهم قريب و منهم نازح الدار % 39(@)(@@) % يفوقونو نبلي في كنانته % % إلي كل كليل النصل خوار % 40(@)(@@) % و لو تفوق سهمي راكبا وترا % يوما لطال عليهم نقض أوتاري % % PageV01P361 41(@)(@@) % إياكم أن تشيموا برق غادية % مسفة بذعاف السم مدرار % 42(@)(@@) % و لا يغرنكم أمطار مبتسم % يزجي الصواعق في أثناء أمطار % 43(@)(@@) % فالسيف يبدي ابتساما عند هزته % % و قد أسر المنايا أي إسرار % 44(@)(@@) % و ما رأيتم شجاعا قبل رؤيته % % قراكمو هو مود شهد مشتار % 45(@)(@@) % يبر منكم شبابا ما لهم حزن % على الصباو شيوخا غير أبرار % 46(@)(@@) % من كان يعجز عن سهلي إذا استبقت % خيل القريضفكم تجتاب أوعاري % % 47(@)(@@) % و هل يقوم لجمعي حين أضرمه % مغرر عن زناد قلبه واري % % 48(@)(@@) % لو كنتم العنبر الورد الشبيه به % % و المندل الرطبشبت منكم ناري % % 49(@)(@@) % لكنكم حطب بال تحرقه % سعير شمس الضحى من قبل أشعاري % % PageV01P362 البحر : - 1(@)(@@) % يؤرقهإذا البرق استنارا % % هوى يقتاد عبرته اقتسارا % % 2(@)(@@) % بدا مشقا ترود العين فيه % % فتقرأ من لوامعه ادكارا % % 3(@)(@@) % و نمنمة تضيء له وتخبو % % كما طيرت عن 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms91# زند شرارا % % 4(@)(@@) % و إيماضا يشق الجو شقا % كما قتبست إماء الحي نارا % % 5(@)(@@) % فرحت أسائل الركبان عنه % % بأي جنوب كاظمة استطارا % % 6(@)(@@) % لأذكرني أعز الناس جارا % و أحلى الأرض في عيني دارا % % 7(@)(@@) % و عدل الحب من قوم تعدى % % علي الشوق بعدهمفجارا % % 8(@)(@@) % و ناعمة الصبا تسجوفتشجو % % قلوبا من صبابتها مرارا % % 9(@)(@@) % أقول لهاإذا سفرت ومارت % أغصن البان أثمر جلنارا % % 10(@)(@@) % أصابهمو إن بعدوا منالا % على العشاقأو بعدوا مزارا % % PageV01P363 11(@)(@@) % نسيم الريح ما راحت جنوبا % و صوب المزن ما ابتكرت عشارا % % 12(@)(@@) % سأعفي الدهر من تكدير عذلي % % فأعذرهو إن خلع العذارا % % 13(@)(@@) % لقينا من حوادثه جيوشا % و خضنا من نوائبه غمارا % % 14(@)(@@) % فلم نظهر له إلا قراعا ؛ % و لم نلبس له إلا وقارا % % 15(@)(@@) % و من يكن الأمير له مجيرا % يكن للكوكب العلوي جارا % % 16(@)(@@) % هو الجبل الأشم حمى وعزا % ترفع أن ترى جبلا مغارا % % 17(@)(@@) % فررت إليه من صرف الليالي % % فنكب جورها عني فرارا % % 18(@)(@@) % و لما اخترته ليفل عني % % شباة الدهر لم آل اختيارا % % 19(@)(@@) % و كان القرب منه جمال دنيا % % ترى أيامهاحسنا قصارا % % 20(@)(@@) % و عيشا ناضر الأفنان غضا % يرفإذا اهتصرناه اهتصارا % % PageV01P364 21(@)(@@) % فما برح العدا حتى أعادوا % % حلاوة نشوتي منه خمارا % % 22(@)(@@) % فعوضني من الأنس انحرافا ؛ % و بدلني من البشر ازورارا % % 23(@)(@@) % فصرت أرى نهاري منه ليلا % و كنت أرى به ليلي نهارا % % 24(@)(@@) % أبيتو مقلتي تذري نجيعا % و قد أفنت مدامعها الغزارا % % 25(@)(@@) % ترى الأشفار منه معصفرات % فتحسب أنها لاقت شفارا % % 26(@)(@@) % أبا الهيجاء أصبحت القوافي % % تخب إليك حجا واعتمارا % % 27(@)(@@) % عتابا كالنسيم جرى لعتب % تضرم في الحشا مني استعارا % % 28(@)(@@) % أشعشعه لأطرب سامعيه % % كما شعشعت بالماء العقارا % % 29(@)(@@) % أيجمل أن أرى منك انحرافا % و لا عارا أتيتو لا شنارا % % 30(@)(@@) % و لم أجحد صنائع منك جلت % و لم أسلبك مدحا فيك سارا % % PageV01P365 31(@)(@@) % و لكني كسوتك حلي قوم % رأيتك منهم أزكى نجارا % % 32(@)(@@) % و أي غريبة للشعر لاقت % علاكفحاولت عنها اصطبارا % % 33(@)(@@) % تحن إليك أبكار القوافي % % إذا اجتليت رواحا وابتكارا % % 34(@)(@@) % فتقرب منك أنسا بالمعالي % % و تبعد من بعولتها نفارا % % 35(@)(@@) % و يؤثرك الثناء على ملوك % تعد مقامها فيهم حسارا % % 36(@)(@@) % و كيف تلام خيرة القوافي 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms92# % % إذا اختارت من القوم الخيارا % % 37(@)(@@) % تبين زهوها في العيد لما % % رأت مولى يتوجها فخارا % % 38(@)(@@) % فهزت عطفها طربا إليه % % و ألقت عن محاسنها الخمارا % % 39(@)(@@) % فإن تك هفوة عرضت سرارا % فقد أصحبتها عذرا جهارا % % 40(@)(@@) % و مما شيد الشرف المعلى % % ذنوب صادفت منك اغتفارا % % PageV01P366 41(@)(@@) % فضلت الناس فضلا واقتصادا % وإشراقا من الجدوى ابتدارا % % 42(@)(@@) % و لولا أن أعوذك من عدوي % % حسبناه لنضرته نضارا % % PageV01P367 البحر : - 1(@)(@@) % أقصر الزاجر عنه فازدجر % و طوى اللائم ما كان نشر % 2(@)(@@) % حمل الغي عليه أصره % % فإذا قيل ارعوى عنه أصر % 3(@)(@@) % قائل إن نذر الشيب بدت % % في عذاريهو ما تغني النذر % 4(@)(@@) % شعر مات على مفرقه ؛ % و حياة المرء في موت الشعر % % 5(@)(@@) % و شباب جف إلا شجر % موجف منهو كم يبقى الشجر % % 6(@)(@@) % يا خليلي اطلبا وتركما % % تجداه بين كأس ووتر % % 7(@)(@@) % ساقني مستشرف الديرو قد % % راح صوب المزن فيه وبكر % % 8(@)(@@) % أهواء رق في أرجائه % أم هوى راقفما فيه كدر % % 9(@)(@@) % و خدود سفرت عن وردها % % أم ربيع عن جنى الورد سفر % % 10(@)(@@) % مجلس ينصرف الشربو ما % % طويت من بسطة تلك الحبر % % PageV01P368 11(@)(@@) % و كأن الشمس فيه نثرت % ورقا من بين أوراق الشجر % % 12(@)(@@) % بين غدر يقع الطير بها % % فتراهن رياضا في غدر % % 13(@)(@@) % و ثرى يشهد بالطيب له % % عبق حالف أطراف الأزر % % 14(@)(@@) % و غيوم نشرت أعلامها % % فلها ظل علينا منتشر % % 15(@)(@@) % و نسيم عطر الروضفإن % طار في الصبح ارتديناه عطر % % 16(@)(@@) % نحن في ظل وصال سجسج % ناعم الآصال فينان البكر % % 17(@)(@@) % و إذا الدهر رمانا صرفه % % فبعمار بن نصر ننتصر % 18(@)(@@) % يا أميرا خضع الدهر له % % فغدا يفعل طرا ما أمر % % 19(@)(@@) % و إذا الجدب عرا كان حيا ؛ % و إذا الخطب دجى كان قمر % % 20(@)(@@) % و إذا هز لمعروف مضى % % كالحسام العضبإن هز بتر % % PageV01P369 21(@)(@@) % صادق البشر ترى ماء الندى % % يرتقي في وجهه أو ينحدر % % 22(@)(@@) % فله فيه اطراد كامن % كاطراد الماء في العضب الذكر % 23(@)(@@) % قلتإذ برز سبقا في العلى % % أإلى المجد طريق مختصر % % 24(@)(@@) % إن تكن تغلب يوما وسمت % صفحة الدهر بيوم مشتهر % % 25(@)(@@) % فبنو الحارث فيهم وزر % حين لا ينجي من الدهر وزر % % 26(@)(@@) % فعدي غرر المجدإذا % % قسم المجد 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms93# حجولا وغرر % % 27(@)(@@) % معشر لولا أحاديث الندى % % عنهم لم يعرف الناس السمر % % 28(@)(@@) % يا أبا اليقظان أيقظت الندى % % فملأت البدو منه والحضر % % 29(@)(@@) % و لكم أرديت من مستلئم % صادق الإقدام يحمي ويكر % 30(@)(@@) % و الضحى أدهم النقع فإن % ضحكت فيه الظبا كان أغر % PageV01P370 31(@)(@@) % موقف لو لم يكن نارا إذا % لم تكن زرق عواليه شرر % % 32(@)(@@) % ينظم الطعن على أبطاله % و عقود الهام فيه تنتشر % % 33(@)(@@) % و كأن الشمس في قسطله % كاعب أسبل سجفيها الخفر % % 34(@)(@@) % فتوخيت به حمد العلى % % و القنا يخطر محمود الأثر % % 35(@)(@@) % و ثنيت الخيل عنه لابسا % حلة النصرمحلى بالظفر % % 36(@)(@@) % قد تقضى الصوم محمودا فعد % لهوى يحمدأو راح تسر % 37(@)(@@) % أنت والعيد الذي عاودته % % غرتا هذا الزمان المعتكر % % 38(@)(@@) % لذ فيك المدح حتى خلته % % سمرا لم أشق فيه بسهر % % PageV01P371 البحر : - 1(@)(@@) % أعن الأهلة في الدياجر % سفرت لناو البين سافر % 2(@)(@@) % أم عن محاجر ربرب % كشفت لنا تلك المعاجر % % 3(@)(@@) % أظباء وجرة أقصدت % ك بسحر أجفان فواتر % % 4(@)(@@) % جنت الهوى وتنصلت % % باللحظ من تلك الجرائر % % 5(@)(@@) % حتى أخذن من المنا % % طق للذي تحوي المآزر % % 6(@)(@@) % لأخاطرنو ما المنى % % في الحبإلا للمخاطر % % 7(@)(@@) % فلأوضحن صبابتي % % بالدمع في الدمن الدواثر % % 8(@)(@@) % تالله أغدر بالهوى % % مادمت مسود الغدائر % 9(@)(@@) % و لكم هصرت غصون عي % % ش مورق الأفنان ناضر % % 10(@)(@@) % و وجدت عدل الدهر حك % % م مسفه ووفاء غادر % % PageV01P372 11(@)(@@) % و على الأمير أبي المظف % فر في الندى تثنى الخناصر % % 12(@)(@@) % و عليه تزدحم العلى % % دون البرية والمآثر % % 13(@)(@@) % ملك إلى أفعاله % % تنمى المناقب والمفاخر % % 14(@)(@@) % كثرت مواهبه وقل % لت عند طالبها المعاذر % % 15(@)(@@) % و تغايرت فيه العلى % % حتى حسبناها ضرائر % % 16(@)(@@) % ذخر الثناء وفرقت % يمناه مجتمع الذخائر % % 17(@)(@@) % و أقام يعمل في العدو % ظبا العواسل والبواتر % % 18(@)(@@) % متقيلا شرف الأرا % % قم كابرا منهمفكابر % % 19(@)(@@) % أقمار مجد تنجلي % % بضيائها ظلم الدياجر % % 20(@)(@@) % و جبال أحلام تقل % لهم الأسرة والمنابر % % PageV01P373 21(@)(@@) % آساد كل كريهة % فتكت بآساد خوادر % % 22(@)(@@) % تدمى شبا أظفارها % % و الموت محمر الأظافر % % 23(@)(@@) % و ترى السوابغ والقنا % % مثل الغلائل والمخاصر % % 24(@)(@@) % كم حاولوا قسر العدو % بصولة الأسد القساور % % 25(@)(@@) % و كتائب تزجي الردى % % ما بين مدرع و حاسر % % 26(@)(@@) % و تركن وسم أهلة % في الصخر من 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms94# وقع الحوافر % % 27(@)(@@) % فبكرن يحجبن الصبا % % ح بقسطل في الجو ثائر % % 28(@)(@@) % و غدواو طيب ثنائهم % % ينبيك عن طيب العناصر % % 29(@)(@@) % يا ناصر الكرم الذي % % لولاه كان بغير ناصر % % 30(@)(@@) % من كان مثلك لم تنل % معشار سؤدده العشائر % % PageV01P374 31(@)(@@) % شيم إذا ما شمتها % % أغنت عن الديم الهوامر % % 32(@)(@@) % مثل الأصائل في السما % % حفإن أبى عادت هواجر % % 33(@)(@@) % و شمائل هن الشمو % % س لباطن منها وظاهر % % 34(@)(@@) % فكأنما هي روضة % منظومة فيها الأزاهر % % 35(@)(@@) % يهني المكارم أنها % % أمنت ببرئك ماتحاذر % % 36(@)(@@) % من بعد ما أنحت علي % % ك نوائب خرز النواظر % % 37(@)(@@) % فاهتز جسمك مثلما % % يهتز ماضي الحد باتر % % 38(@)(@@) % لازال لطف الله يد % رأ عنك مكروه الدوائر % % 39(@)(@@) % و سرت إلى أعدائك الأ % % حداث بالأجل المسافر % % 40(@)(@@) % لاحظت ربعكفاكتحل % ت بمخصب الجنبات زاهر % % PageV01P375 41(@)(@@) % و وردت بحرا منك مح % % مود الموارد والمصادر % % 42(@)(@@) % و تركت مدحك سائرا % في الناس من باد وحاضر % % 43(@)(@@) % فتحل منه محبر الأ % % برادمنظوم الجواهر % % 44(@)(@@) % لم يعز در عقوده % % إلا إلى بحر الخواطر % % PageV01P376 البحر : - 1(@)(@@) % سر سرك اللهفيما أنت منتظر % فقد جرى بالذي تهوى لك القدر % 2(@)(@@) % و أظفرتك بما أملت أربعة % النصر والفتح والإقبال والظفر % 3(@)(@@) % لم يعل نجمك في أعلى مطالعه % % حتى غدت أنجم الأعداء تنتشر % 4(@)(@@) % و كيف يبعد أمر أنت طالبه % % و الله طالبه والبدو والحضر % 5(@)(@@) % يا ناصر الدولة استعجل إجابتها % % فقد دعتكو ما في صفوها كدر % 6(@)(@@) % ملك تجدد لم يدم السنان له % % عزا ولم يتحل الصارم الذكر % 7(@)(@@) % باب السعادة مفتوح لداخله % % و أنت داخلهو السادة الغرر % 8(@)(@@) % فالملك مبتسم و الأمر منتظم % و الدهر من دولة الأوغاد يعتذر % 9(@)(@@) % فما انتظاركو الآفاق ناظرة % إليكو الحضرة الغراء تنتظر % 10(@)(@@) % و قد نجا البدرإذ طاف الكسوف به % % و زال عن مشتهيه الخوف والحذر % PageV01P377 البحر : - 1(@)(@@) % أربعاء حسامه مشهور % حين يأتيو شره محذور % 2(@)(@@) % نتوقاه أول الشهرإن دا % % رو نخشاه آخرا لا يدور % 3(@)(@@) % فاغد سرا بنا إلى قفص المل % حيفالعيش فيه غض نضير % 4(@)(@@) % نتوارى من الحوادثو الده % % ر خبير بمن توارى بصير % 5(@)(@@) % منزل في فناء دجلة يرتا % % ح إليه الخليع والمستور % 6(@)(@@) % طائر في الهواءفالبرق يسري % % دون أعلاهو الحمام يطير % 7(@)(@@) % و إذا 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms95# الغيم سار أسبل منه % % حلل حول جدره وستور % 8(@)(@@) % فإذا غارت الكواكب صبحا % فهو الكوكب الذي لا يغور % 9(@)(@@) % ليس فيه إلا خمار وخمر % و ممات من سكره ونشور % 10(@)(@@) % و حديث كأنه زهر السو % % سن حسنا أو لؤلؤ منثور % PageV01P378 11(@)(@@) % و جريح من الدنان يسيل الر % راح من جرحهو قدر تفور % 12(@)(@@) % و لك الظبية الغريرةإن شئ % تفإن عفتهافظبي غرير % 13(@)(@@) % فتنعم بها نهارا و بتيا % % سيدي معرسا و أنت أمير % 14(@)(@@) % كل هذا بدرهمينفإن زد % تفأنت المبجل المحبور % 15(@)(@@) % فهو شيخ رأى القيادة عيشا % كل عيش سواه إفك وزور % 16(@)(@@) % و من الجور أن يلام علي % و هو عندي في فعله معذور % 17(@)(@@) % ترك الملح والتجارة فيه % % إذرآها تجارة لا تبور % 18(@)(@@) % فتيمم بنا السرور إليه % % إن يوم السرور يوم قصير % PageV01P379 البحر : - 1(@)(@@) % ثنت لك أعطافها والخصورا % % و أعطتك أجيادها والنحورا % % 2(@)(@@) % تصدت لناو الهوى أنة % فصدتو قد غادرته زفيرا % % 3(@)(@@) % و كانت ظباء ترود اللوى % % فأضحت شموسا ترود الخدورا % % 4(@)(@@) % فراق أصاب جوى ساكنا % فكان له يوم سلع مثيرا % % 5(@)(@@) % و ساجي الجفونإذا ماسجى % % أغار المها دعجا أو فتورا % % 6(@)(@@) % أغرر بالنفس في حبه % % و آلف منه غزالا غريرا % % 7(@)(@@) % و أعتد زورته في الكرى % % نوالا لديو إن كان زورا % % 8(@)(@@) % لقد جهل الدهر حق الأريب % و مازال بالدهر طبا خبيرا % % 9(@)(@@) % عزائمه شعل لو سطت % على الليل عاد ضياء منيرا % % 10(@)(@@) % إذا ما توعر خطب سرى % % ففل سهول الفلا والوعورا % % PageV01P380 11(@)(@@) % نزور أغر تغار العلى % % عليهو يلفى عليها غيورا % % 12(@)(@@) % إذا المجد أنجز ميعاده % % أعاد وعيد الليالي غرورا % % 13(@)(@@) % يعد من الأزد يوم الفخار % ملوكا حوت تاجها والسريرا % % 14(@)(@@) % يريك النديإذا ما احتبوا % % بدور المحافل تحبو البدورا % % 15(@)(@@) % و تجلب من كرم في الندى % % فإن أجلب الدهر أضحى وقورا % % 16(@)(@@) % أقول لمن رام إدراكه % % و ما رام من ذاك إلا عسيرا % % 17(@)(@@) % عزاؤك إن عز نيل السهى % % و صبرك لست تنال الصبيرا % % 18(@)(@@) % سلامةيا خير من يغتدي % % سليم الزمان به مستجيرا % % 19(@)(@@) % إلى كم أحبر فيك المديح % و يلقى سواي لديك الحبورا % % 20(@)(@@) % لهمت عرائسه أن تصد ؛ % و همت كواكبه أن تغورا % % PageV01P381 21(@)(@@) % أتسلمني بعد أن أوجدت % % على 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms96# نوب الدهرجارا مجيرا % % 22(@)(@@) % و أسفر حظي لما رآك % % بينيو بين الليالي سفيرا % % 23(@)(@@) % و كم قيل ليقد جفاك ابن فهد % و قد كنت بالوصل منه جديرا % % 24(@)(@@) % فقلتالخطوب ثنت وده % فلم يبق لي منه إلا يسيرا % % 25(@)(@@) % سأهدي إليك نسيم العتاب % و أضمر من حر عتب سعيرا % % 26(@)(@@) % معان إذا ظهرت دبجت % بطون المديح له والظهورا % % 27(@)(@@) % تبرج للفكر أنسا به % % و طورا تخفر عنه نفورا % % 28(@)(@@) % تراءت له كسطور البروق % و قد رامها فشآها سطورا % % 29(@)(@@) % فيهنك أن حل وفد السرور % و أزمع وفد الصيام المسيرا % % 30(@)(@@) % فلا فضل للعود حتى يحن ؛ % و لا حمد للكأس حتى يدورا % % PageV01P382 31(@)(@@) % فقد جدد الدهر ظلا ظليلا % و روضا أريضا و ماء نميرا % % 32(@)(@@) % و حل الربيع نطاق الحيا % % فغادر في كل سهل غديرا % % 33(@)(@@) % هواء بنا شره حسرا % فنقسمه ساجيا أو حسيرا % % 34(@)(@@) % و زهر إذا ما اعتبرنا النسيم % حسبناه يمسح منه العبيرا % % 35(@)(@@) % و روض يراق بماء الحياة % فنواره يملأ العين نورا % % 36(@)(@@) % جلا البرق عن ثغره ضاحكا % إليهفأضحك منه الزهورا % % 37(@)(@@) % و سافره الرعد مستعطفا % فقد سفر الورد فيه سفيرا % % 38(@)(@@) % و مالت من الري أشجاره % % كأن السواقي سقتها الخمورا % % 39(@)(@@) % و ولت صوادر منشورة % و قد ملأ الحزن منه الصدورا % % 40(@)(@@) % أوان تحييك أنواره % % رواحا بأنفاسهاأو بكورا % % PageV01P383 41(@)(@@) % و شهر يشهر ثوب الثرى % % و ينظم بالطل فيه شذورا % % 42(@)(@@) % أعاد عبوس الربا نضرة % و شيب الغصون شبابا نضيرا % % 43(@)(@@) % فسل الجداول سل الذكور % و أغمض للبيض بيضا ذكورا % % 44(@)(@@) % و دل على عدله أننا % % نرى القر معتدلا و الهجيرا % % 45(@)(@@) % فلازلت مغتبطا ما حييت % بعيد يعيد عليك السرورا % % 46(@)(@@) % بكاس بكف خلوب اللحاظ % % تخلب شرابها والمديرا % % 47(@)(@@) % إذا هو عاينها بالمزاج % رأى غدرها لهبا مستطيرا % % 48(@)(@@) % تشير إليك بها كفه % و قد مثلت لك كسرى مشيرا % % 49(@)(@@) % بحلة ورد إذا ردها % % على الشرب عاودها مستعيرا % % 50(@)(@@) % تحف بها صور لاتزال % عيون الندامى إليهن صورا % % PageV01P384 51(@)(@@) % فلو أن ميتا يلاقي النشور % بنشر المدامة لاقى النشورا % % 52(@)(@@) % و فكر خواطره ألبست % علاك من المجد ثوبا خطيرا % % 53(@)(@@) % محاسن لو علقت بالقتير % لحسن عند الحسان القتيرا % % 54(@)(@@) % إذا ما جفت خلع المادحين % عليهنرقت 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms97# فكانت حريرا % % PageV01P385 البحر : - 1(@)(@@) % ما سره أن زاع من أسراره % % ما غيب الكتمان في إضماره % % 2(@)(@@) % تأبى العبارة عن هواه فينبري % % جفن يعبر عنه في استعباره % % 3(@)(@@) % أخفاه بين ضلوعه فجفت به % % حرق تظاهره على إظهاره % % 4(@)(@@) % أنى يكون القصد شيمة وجده % % يوم النوى و الجور شيمة جاره % % 5(@)(@@) % هل ينجدن فريق نجد بعدما % % غارت نجوم الحسن في أغواره % % 6(@)(@@) % نهدي التحية منهم لمحجب % عبراتنا أبدا تحية داره % % 7(@)(@@) % و ضعيف عقد الخصر راب ردفه % ظلم الجمال نطاقه لإزاره % % 8(@)(@@) % و مودع ظفرت يداه بمهجتي % % فمضى ونضح دمي على أظفاره % % 9(@)(@@) % أقصرت عن ذكر السلوو قصرت % % همم العذولفعاد في إقصاره % % 10(@)(@@) % و غنيت بالساقي الأغن لأنه % % وزر يزيد الصب من أوزاره % % PageV01P386 11(@)(@@) % ظفرت يداه بمهجة الدن الذي % % غبرت وديعة صدره وصداره % % 12(@)(@@) % فصباحها من ليلهو نسيمها % % من تربهو عقيقها من قاره % % 13(@)(@@) % قل للعذول إليك عن ذي عدة % ما ثار إلا نال أبعد ثاره % % 14(@)(@@) % صل إذا ما افتر عن أنيابه % % من سمه قطرت على أشفاره % % 15(@)(@@) % لو أنه جارى عتيقي طيء % في الحلبتين تبرقعا بغباره % % 16(@)(@@) % مازال ينجده ابن فهد ناصرا % حتى أعاد الدهر من أنصاره % % 17(@)(@@) % جاورت منه غزير جمات الندى % % و البحر يغني جاره بجواره % % 18(@)(@@) % و أغر ما طلعت أسرة وجهه % % إلا استسر البدر قبل سراره % % 19(@)(@@) % مثل الشهاب محرقا أو كاسفا % ظلم الخطوب بنوره أو ناره % % 20(@)(@@) % أو كالحسامإذا مضى في مشهد % شهدت مضاربه بعتق نجاره % % PageV01P387 21(@)(@@) % أو كالربيع الطلق واجه قطره % % وجه الثرى فاخضر من أقطاره % % 22(@)(@@) % خلق سهول المكرمات سهوله % % و توعر الأيام من أوعاره % % 23(@)(@@) % إن لاحفهو الصبح في أثوابه ؛ % أو فاحفهو الروض في نواره % % 24(@)(@@) % نزلت على حكم القنا أعداؤه % لما أشار إليهم بشراره % % 25(@)(@@) % و ارتد من جاراه مضمر حسرة % لما جرى للمجد في مضماره % % 26(@)(@@) % عزم يذب عن العلا بذبابه % أبدا و يحمي عزها بغراره % % 27(@)(@@) % و مكارم تعلي ذرى أطواده % % في الأزدأو تذكي سنا أقماره % % 28(@)(@@) % يا خيرة المجد الذي ورث العلى % % من فهد الأدنى و من مختاره % % 29(@)(@@) % بكر الثناء عليكفاخلع عونه % % و البس جديد الحلي من أبكاره % % 30(@)(@@) % و اسلمفقد سلمت خلالك كلها % % من عر أخلاق 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms98# اللئيم وعاره % % PageV01P388 31(@)(@@) % و تحلها من عائذ بكواثق % دهرا سهام الظلم في أوتاره % % 32(@)(@@) % ألبسته برد الغنى و سللته % % من عدمهفانسل من أطماره % % 33(@)(@@) % قد كان هيض جناحهفجبرته % % بنداكحتى طار في أوطاره % % 34(@)(@@) % فجفى المواطن والأحبة ناسيا % من لا يفيقالدهرمن تذكاره % % 35(@)(@@) % لولا ربيع نوالك الغمر الندى % % ما كان يذهل عن ربيع دياره % % 36(@)(@@) % نشر الثناءفكان من إعلانه % % و طوى الودادفكان من أسراره % % 37(@)(@@) % كالنخل يبدي الطلع من أثماره % % حينا ويخفي الغض من جماره % % PageV01P389 البحر : - 1(@)(@@) % هل الصبر مجد حين أدرع الصبرا % % و هل ناصر للشعر يوسعه نصرا % % 2(@)(@@) % تحيف شعرييا ابن فهد مصالت % ظلوم فقد أعدمت منهو قد أثرى % % 3(@)(@@) % و في كل يوم للغبيينغارة % تروع ألفاظي المحجلة الغرا % % 4(@)(@@) % إذا عن لي معنى تضاحك لفظه % % كما ضاحك النوار في روضه الغدرا % % 5(@)(@@) % غريب كسطر البرق لما تبسمت % مخائله للفكر أودعته سطرا % % 6(@)(@@) % فوجه من الفتيان يمسح وجهه ؛ % و صدر من الأقوام يسكنه صدرا % % 7(@)(@@) % تناوله مثر من الجهل معدم % من الحلممعذور متى خلع العذرا % % 8(@)(@@) % فبعد ما قربت منه غباوة % ورددما سهلت من لفظهوعرا % % 9(@)(@@) % فمهلا أبا عثمانمهلا فإنما % % يغار على الأشعار من عشق الشعرا % % 10(@)(@@) % لأطفأتما تلك النجوم بأسرها % % و دنستما تلك المطارف والأزرا % % PageV01P390 11(@)(@@) % فويحكما هلا بشطر قنعتما % % و أبقيتما لي من محاسنها شطرا % % 12(@)(@@) % لئن وترت كفي سعيد بن هاشم % فقد نال من شعري بغارته الوترا % % PageV01P391 البحر : - 1(@)(@@) % أمن المدامة تنثني سكرا % % أم قد سقتك جفونها خمرا % % 2(@)(@@) % نثرت فريد الدمع حين رأت % صبا يقاد إلى الردى نثرا % % 3(@)(@@) % إن الوداعو إن سعدت به % % ليزيد كامن لوعتي حرا % 4(@)(@@) % لما رأت للبين رائعة % تطوي الوصالو تنشر الهجرا % % 5(@)(@@) % ضاقت بأدمع ها الجفون كما % % ضاق المودع بالهوى صدرا % % 6(@)(@@) % و إذا رأيت نوالهم ثمدا % فالحظ بين طلابك البحرا % % 7(@)(@@) % اكفف يديك عن اللئامو لو % % أضحت يداك من الغنى صفرا % % 8(@)(@@) % و إلى الأمير سريت مرتديا % بعزيمة تدع الدجى فجرا % % 9(@)(@@) % و أغر نهد لو طلبت به % % شأو الجنائب بذها حضرا % % 10(@)(@@) % طرفا إذا ما اختالخلت به % % صلفا من الإعراضأو كبرا % % PageV01P392 11(@)(@@) % ينسيك صبغ أديمه الخمرا ؛ % و تريك غرة وجهه البدرا % % 12(@)(@@) % لا يستقر كأن أربعه % % فرش يطا 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms99# من تحتها الجمرا % % 13(@)(@@) % و كأنهلما كتسى عرقا % ورقالشقائق يحمل القطرا % % 14(@)(@@) % يجري ويعطفه العنان كما % % عطف القضيب وقد غدا نضرا % % 15(@)(@@) % حمد العفاةفطال حمدهم % بندى الأمير علي الدهرا % % 16(@)(@@) % أدنى المكارمو هي نازحة % بالجود منهو شرد العسرا % % 17(@)(@@) % نشرت له غر الصنائع في % % شرق البلاد وغربها ذكرا % % 18(@)(@@) % و النورإن جاد الغمام به % % حملت له ريح الصبا نشرا % % 19(@)(@@) % يلقاه راجي الجود مبتسما % سهل الخلائق لابسا بدرا % % 20(@)(@@) % عزماتهفي كل مظلمة % سيف يضيء البدو والحضرا % % PageV01P393 21(@)(@@) % يقظان ينتجع الحتوف وقد % % جعل السبيل إلى العلى الصبرا % % 22(@)(@@) % في فتية جعلوا معاقلهم % % بيض الصفائح والقنا السمرا % % 23(@)(@@) % يرد الندى ورد الظماء على % % نهل يبرد منهم الحرا % % 24(@)(@@) % بمثقفات يحتملنو قد % % حملت نجوما في الوغى زهرا % % 25(@)(@@) % و صوارم خضر مضاربها % % تكسو الرجال عمائما حمرا % % 26(@)(@@) % فكأن أطراف القنا حدق % ترنو إلى مقل العدا شزرا % % 27(@)(@@) % و كأن سابغة الدروع ضحى % غدر تمر بها الصبا مرا % % 28(@)(@@) % قوم إذا اسود الزمان غدت % أيمانهم بفعالهم غرا % % 29(@)(@@) % سادواو سادهم أبو حسن % بعلى تزين النظم والنثرا % % 30(@)(@@) % ملك إذا استلت صوارمه % % ذهبت دماء عداته هدرا % % PageV01P394 31(@)(@@) % ظلم العدا والمالحين سطا % % بأسا و أتبع نائلا غمرا % % 32(@)(@@) % لا زال يظلم في سطاه وفي % % نفحاته الأعداء والوفرا % % PageV01P395 البحر : - 1(@)(@@) % غصبان ينسانيو أذكره % % و ينام عن ليليو أسهره % % 2(@)(@@) % و بجوره ما صار مورقه % % حظيو حظ سواي مثمره % % 3(@)(@@) % و كفى الهوى لو كان مكتفيا % ما رحت أضمره وأظهره % % 4(@)(@@) % لم يقتسم في العاشقين أسى % إلا وقسمي منه أوفره % % 5(@)(@@) % فأطيح في نفس أصعده % % و أعوم في دمع أحدره % % 6(@)(@@) % و سمير نجم لا براح له % % و كأنما ملك يسمره % % 7(@)(@@) % و مهفهف هفت العقول به % % شغفا تخيرهن أحوره % % 8(@)(@@) % إن لم يكن وهب الغزال له % % لحظات مقلته فجؤذره % % 9(@)(@@) % وافى بخمرته وناظره % % بالفتر يسكرها وتسكره % % 10(@)(@@) % حمراء كالياقوت صافية % و معظم الياقوت أحمره % % PageV01P396 11(@)(@@) % فهي التي عصرت لقاطفها % % عنقودها من قبل يعصره % % 12(@)(@@) % في كأسه كسرى يقابله % % من خلف ستر الراح قيصره % % 13(@)(@@) % فكأنها نار هما حصب % لحريقها العالي يسعره % % 14(@)(@@) % أصلى لها هذا تمجسه % % و أحلها هذا تنصره % % 15(@)(@@) % في زاهر عبق تضوعه % % فكأن عطارا يعطره % % 16(@)(@@) % ضاهى ممسكه معنبره % % و 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms100# حكى مدرهمه مدنره % % 17(@)(@@) % و حكى غديرا غادرته لنا % % خضر النبات يرف أخضره % % 18(@)(@@) % صاف تمد الريح خطوتها % % و يفيض فيهفلا تكدره % % 19(@)(@@) % مثل الرداء يكفصانعه % % يطويه أحيانا وينشره % % 20(@)(@@) % شاد الأمير بناء مكرمة % لا يستطيع النجم يعشره % % PageV01P397 21(@)(@@) % وسماؤه الكرم الذي شرقه % % فيه أسرته ومنبره % % 22(@)(@@) % و كأن قدسا أو متالعه % % وهب الوقار له يوقره % % 23(@)(@@) % و مغيم يوم السخط مظلمه % % و مضيء ليل البشر مقمره % % 24(@)(@@) % و كأنه في الغيب مطلع % للأمر يورده ويصدره % % 25(@)(@@) % و إذا الأنامل أرعشت حذرا % فشفاء من علقته خنصره % % 26(@)(@@) % و إذا تلجلج قائل حصرا % و أمات حجته تحيره % % 27(@)(@@) % فتق المسامع بالصوابو لم % % تنجد بديهته تفكره % % 28(@)(@@) % من حيث لا معنى يعقده % % عيا و لا لفظ يكدره % % 29(@)(@@) % فمتى أراد الجحد حاسده % % شهدت غمائمه وأبحره % % 30(@)(@@) % و إذا طمى في البر بحر وغى % لا شيءإلا السيفمعبره % % PageV01P398 31(@)(@@) % أبصرت عسكر نجدة تحيا % منهإذا ما شام عسكره % % 32(@)(@@) % حيث الظبا بالهام عاثرة % و الصبح مثل الليل غثيره % % 33(@)(@@) % يردي العدا بالضرب أبيضه % % و يبيدهم بالطعن أسمره % % 34(@)(@@) % سرب الحديثة راضيين به % % في مأمن ممن ينفره % % 35(@)(@@) % إن زاد عنها ما يروعها % % فالغاب يدفع عنه قسوره % % 36(@)(@@) % فليحي في ظفر وعاش له % % في نعمة أبدا مظفره % % 37(@)(@@) % ولد علت بركات مولده % % سعدا و طهره مطهره % % 38(@)(@@) % ضاهى أباه سماحة وحجى % % و حكاه مرآه ومخبره % % 39(@)(@@) % أأبا شجاع يا عقيد ندى % كرمت أرومته وعنصره % % 40(@)(@@) % الله يعلم كيف أحمد ما % % أوليتنيهو كيف أشكره % % PageV01P399 41(@)(@@) % و نداك لا تنسى مواعده % % كرما فما أحتاج أذكره % % 42(@)(@@) % لكن إحسانا تقدمه % % أولى به مما تؤخره % % 43(@)(@@) % و مداك إن جاد المداء به % غمر الثناءنداك يغمره % % PageV01P400 البحر : - 1(@)(@@) % يا أبا إسحاق زاد ال % % له في حسن حبورك % 2(@)(@@) % و غدا شانيك ذا هم % م طويل بسرورك % 3(@)(@@) % عمر الله بطلا % ب الندى أبواب دورك % 4(@)(@@) % أشرق الدهرو ما إش % % راقه إلا بنورك % 5(@)(@@) % و أرى الأيام لا تب % خل إلا بنظيرك % 6(@)(@@) % قلت للحاسدصبرا % إذ نوى نيل صبيرك % 7(@)(@@) % أنت غيث لموالي % % كو ليث لمثيرك % 8(@)(@@) % فالورى في برد آصا % % لكأو حر هجيرك % 9(@)(@@) % لا تنبي عن معالي % % ك الورى مثل خبيرك % 10(@)(@@) % شدت علياك بتغلي % % سك فيها 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms101# وبكورك % PageV01P401 11(@)(@@) % ظاهرا للحمد تنبي % % ه على بعد ظهيرك % 12(@)(@@) % كيفما جردت أقلا % % مك أغنت عن ذكورك % 13(@)(@@) % فكأن الدهر قد سط % طر ما بين سطورك % 14(@)(@@) % بدع ترتع منها ال % % عين في وشي حبيرك % 15(@)(@@) % حسبنا من جودك العم % % رو من فيض بحورك % 16(@)(@@) % قد أتانا منه ما زا % % د على شكر شكورك % 17(@)(@@) % بين صفر من دناني % % ركأو صفر خمورك % 18(@)(@@) % فاشفع العرف بعرف % ترتضيه من بخورك % 19(@)(@@) % وبق لا أقصر صوب ال % % مزن عن فيح قصورك % PageV01P402 البحر : - 1(@)(@@) % أبا جعفر كانت يداك سحائبا % تفيض على الركب العفاة غزارها % % 2(@)(@@) % فما للندى قد سد منك سبيله % و ما للمعالي عطلت منك دارها % % 3(@)(@@) % لقد قبضت كيد المكارم كفه % % و قل على رغم العفاة غزارها % % 4(@)(@@) % فأظلمت الآفاق بعد محمد % فسيان منها ليلها ونهارها % % PageV01P403 البحر : - 1(@)(@@) % شباب المرء ثوب مستعار % و أيام الصبا أبدا قصار % 2(@)(@@) % طوى الدهر الجديد من التصابي % % و ليسلما طوى الدهرانتشار % 3(@)(@@) % و لم نعط المنى في القرب منه % % فكيف بهاو قد شط المزار % 4(@)(@@) % صدود في التقارب واجتناب % و شوق في التباعد وادكار % 5(@)(@@) % يطولإذا تقاصرت الليالي % % و يقربإن تباعدت الديار % 6(@)(@@) % لحى الله العراق وساكنيه % فما للحر بينهم قرار % 7(@)(@@) % و جاد الموصل الغراء غيث % يجودو للبروق به انسفار % 8(@)(@@) % كما انهلت مدامع مستهام % تلهب منه في الأحشاء نار % 9(@)(@@) % ففي أيامها حسن التصابي ؛ % و في أفيائها خلع العذار % 10(@)(@@) % ليالي كان لي في كل يوم % إلى الحانات حج واعتمار % PageV01P404 11(@)(@@) % فعن ذكر القيامة بي صدود ؛ % و عن ساح المساجد بي نفار % 12(@)(@@) % و لي خدنان همهما المعالي % % و شأنهما السكينة والوقار % 13(@)(@@) % و ساق تضحك الدنيا إليه % % إذا ضحكت بكفيه العقار % 14(@)(@@) % يطوف بهاو قد حملت حبابا % كما حمل السقيط الجلنار % 15(@)(@@) % كأن الشرب ينتهبون نارا % لها لهب و ليس لها شرار % 16(@)(@@) % رأى الدهر اجتماع الشمل منا % % فشتتهو للدهر الخيار % 17(@)(@@) % و بدلني بأخدان المعالي % % أناسا فعلهم شين وعار % 18(@)(@@) % مساجب لست أغشاهمو لا لي % % من الأيام بينهم انتصار % 19(@)(@@) % هم شجر من التمويه أكدى % % فلا ظل لديهو لا ثمار % 20(@)(@@) % فمغبوط و ليس له عشاء ؛ % و محسود و ليس له دثار % PageV01P405 21(@)(@@) % و مقصور 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms102# الندى قصرت يداه % % فلا نفع لديهو لا ضرار % 22(@)(@@) % و معتصب بتاج الملك فيه % إلى من رام نائله افتقار % 23(@)(@@) % أسير في يد الأيام راض % بما يجري به الفلك المدار % 24(@)(@@) % إذا حكم العبيد عليه فاضت % لفرط الذلأدمعه الغزار % 25(@)(@@) % فما يخشى سطاهالدهر جان ؛ % و لا يرجو نداهالدهرجار % 26(@)(@@) % أأقعد بالعراق أسير دهر % غريبا لا أزور ولا أزار % 27(@)(@@) % و في غربي دجلة لي محل % جوار المكرمات له جوار % 28(@)(@@) % و سيد معشر كرموا وسادوا % % يجير على الخطوب ويستجار % 29(@)(@@) % يهز على النوائب منه عضبا % حساما لا يفل له غرار % 30(@)(@@) % له من جوهر الآداب حلي % و للأسياف حلي مستعار % PageV01P406 31(@)(@@) % تشبه في الفعال به أناس % و أنى يشبه الشبه النضار % 32(@)(@@) % جلت عزماته نوب الليالي % % كما يجلو دجى الليل النهار % 33(@)(@@) % و شاد المجد بالأفضال حتى % % تناهى في العلو به الفخار % 34(@)(@@) % فما فيه عن المعروف منع ؛ % و لا فيه عن الحمد ازورار % PageV01P407 البحر : - 1(@)(@@) % للخالديين جمال منظر % و بزة تملأ عين المبصر % 2(@)(@@) % و العار في فعلهما المشهر % تشابها في منظر ومخبر % 3(@)(@@) % و اشتركا إلى الممات في حر % يحرثه جد فدان الأصغر % 4(@)(@@) % و الزرع إن تم بهللأكبر % أقولإذ هما بأمر منكر % 5(@)(@@) % وراء ستر لهما لم يستر % و اعتفرا ظبي الصريم الأعفر % 6(@)(@@) % و اقتسما باللحظ في المعجر % و جمشا الورد بورد أحمر % 7(@)(@@) % و لعبت أيديهما في القرقر % أيهما بعل الغزال الأحور % 8(@)(@@) % أصاحب الشيبة لم يغير % أم الخضيبذي الصبا المزور % 9(@)(@@) % و كم قبيح لهما مستر % في كل مبدى نازح و محضر % 10(@)(@@) % يسفر عن ضد الصباح المسفر % و ذات وجه كصفا المشقر % PageV01P408 11(@)(@@) % لو رضه الحافر لم يؤثر % خلة بعلين وخل مضمر % 12(@)(@@) % يعجبها وقع خراب البربر % و هي معناة بكل أسمر % 13(@)(@@) % أحين أضحى شيبها كالمغفر % و جاوزت عصر الفتاة المعصر % 14(@)(@@) % حنت إلى كل قمد أعجر % فعنبرت شيئا كلون العنبر % 15(@)(@@) % و لبة في لبب من جوهر % و جلست بين غثا و أغثر % 16(@)(@@) % فشربامن ثغرها المؤشر % ريقا كريق النحلة المزعفر % 17(@)(@@) % و جاذبا مئزر بسل المئزر % فلقيا شنيرها بقنبر % 18(@)(@@) % طعان يوم ضاحك مستبشر % لم تعثر الخيل به في عثير % 19(@)(@@) % ينسى 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms103# به المطعون فرط المنكر % و لو حكت عرس الضرير الأبخر % 20(@)(@@) % و زوجة ابن العصب المخكر % و هي وق ود النار يوم المحشر % PageV01P409 21(@)(@@) % و كيف للأعمى بحظ الأعور % معرة لو فاض ماء الكوثر % 22(@)(@@) % و انهل حنان الغمام الممطر % و برقت لجة بحر أخضر % 23(@)(@@) % حتى ترى ساحة بر أقفر % على الذي هما به لم يظهر % 24(@)(@@) % إني على سلبكما لمجتري % % و في الذي أطلقت غير مقتر % 25(@)(@@) % فاستمعا حسناء لو لم تهجر % حلى بها الخاطب جيد المنبر % PageV01P410 البحر : - 1(@)(@@) % نوال أبي نصر على الدهرناصر % وفت لي به الأيام وهي غوادر % 2(@)(@@) % نظمنا له در الكلامو إنما % % ينظم في الأشعار ما هو ناثر % 3(@)(@@) % أغرإذا ما الحادثات تنكرت % تبلج لي معروفهو هو سافر % 4(@)(@@) % و هل يتعدى الحادث النكر أمره % % و في كفه للدهر ناه وآمر % 5(@)(@@) % من الرقشأعلاه سنان مذرب % و أسفله عضب الغرارين باتر % 6(@)(@@) % و لم أر سيفا يرتدي الوشي قبله % % و تنثر عند الهز منه الجواهر % 7(@)(@@) % فلا راكبا في ظلمة الليل سائرا % مطيته بحر من الخوف زاخر % 8(@)(@@) % و لا مفردا يثني الكتائب بأسه % و يرتاع منه دارع و هو حاسر % 9(@)(@@) % يريك العطايا والمناياإذا جرى % % لوامع في الوشي الذي هو ناشر % 10(@)(@@) % و لما أتتني من يديك صنيعة % شكرتك إني للصنائع شاكر % PageV01P411 11(@)(@@) % و أحسن من يجزى على الحمد كاتب % يسربله وشي الفصاحة شاعر % 12(@)(@@) % يمت إليكم بالقرابةإننا % % عشائر قربى حين تنأى العشائر % 13(@)(@@) % أبونا أبو اللفظ البديع عطارد % تجيش له بالمعجزات الخواطر % 14(@)(@@) % تفرقنا الأنساب في كل مجمع % و تجمعنا الآدابو هي أواصر % 15(@)(@@) % أرى حاجتي لم ينأ منها أوائل % فكيف نأى منها علي الأواخر % 16(@)(@@) % و ما الذم للأيام ذنبا لأنه % % بأمرك يجري صرفها المتواتر % 17(@)(@@) % و لا أظلم المقدار في بعد حاجة % تمسكو الأقلام فيها المقادر % PageV01P412 البحر : - 1(@)(@@) % إذا الشيب باعد بين القلوب % فليس بمجد تداني الديار % 2(@)(@@) % سكنت إلى شمسه كارها % و قد كنت من نجمه ذا نفار % 3(@)(@@) % و زهدني عارها في الخضاب % فجانبت زور الشباب المعار % 4(@)(@@) % و سرحت للشعر بالآبنوس % فسرحت بالعاج شيب العذار % 5(@)(@@) % ألاقي الظلام بمثل الظلام % وألقى النهار بمثل النهار % PageV01P413 البحر 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms104# : - 1(@)(@@) % و أجرد يسعى ليله ونهاره % % و في وسطه عظم يقوم سيره % % 2(@)(@@) % و ما جار فيما سار قدر قلامة % و لكنه يشقى ويستر غيره % % PageV01P414 البحر : - 1(@)(@@) % لا بد من نفثة مصدور % فحاذروا صولة محذور % 2(@)(@@) % قد أنست العالم غاراته % % في الشعر غارات المغاوير % 3(@)(@@) % أثكلني غيد قواف غدت % أبهى من الغيد المعاطير % 4(@)(@@) % أطيب ريحا من نسيم الصبا % % جاءت بريا الورد من حور % 5(@)(@@) % من بعد ما فتحت أنوارها % % فابتسمت مثل الأزاهير % 6(@)(@@) % و بات فكري تعبا بينها % % ينقشها نقش الدنانير % 7(@)(@@) % يا وارث الأغفال ما حبروا % % من القوافيو المشاهير % 8(@)(@@) % أعط قفا نبك أمانا فقد % % باتت بقلب منكمذعور % PageV01P415 البحر : - 1(@)(@@) % و اصطبحناها على نه % % ر بصفو الماء يجري % % 2(@)(@@) % ظللته شجرات % عطرها أطيب عطر % 3(@)(@@) % فلك أنجمه اللي % % مون من بيض وخضر % 4(@)(@@) % أكر من فضة قد % % شابها تلويح تبر % PageV01P416 البحر : - 1(@)(@@) % أنظر إلى السوسن في نباته % % فإنه نبت عجيب المنظر % 2(@)(@@) % كأنه ملاعق من فضة % قد خط فيها نقط من عنبر % PageV01P417 البحر : - 1(@)(@@) % أيا شاغل الشكر عن غيره % % بما ذاع في الناس من شكره % % 2(@)(@@) % و يا ناصر الأدب المستضام % إذا قعد الناس عن نصره % % 3(@)(@@) % أرى خلعة العيد قد أغفلت % و كانت تجيء على إثره % % 4(@)(@@) % فجد لي بحمراء إن فاخرت % جنى الورد أزرت بمحمره % % 5(@)(@@) % و إما بصفراء منسوبة % إلى خالص التبر في نجره % % 6(@)(@@) % و إما ببيضاء مثل اللجين % تزيد بياضا على حره % % 7(@)(@@) % إذا ما أخو الكبر حلى بها % % سراويله زاد في كبره % % 8(@)(@@) % و تلحق بالأرض أطرافها % % إذا هي دارت على خصره % % 9(@)(@@) % إذا ما الحسود رآها رأى % % و ميض الخناجر في نحره % % 10(@)(@@) % فأنت الموحد في جوده ؛ % و أنت المؤمل في عصره % % PageV01P418 البحر : - 1(@)(@@) % سيوفكمبحمد اللهنقع % إذا كانت سيوف الناس ضرا % % 2(@)(@@) % فلم قصرتو أيديكم طوال % تحكم في رقاب الناس طرا % % 3(@)(@@) % و ما لفراخكم تبيض لونا % فإن زقت شآها الزق حمرا % % 4(@)(@@) % و ما لجريحكم وتر عليكم % % و كل جراحة تعتد وترا % % 5(@)(@@) % و رب جريرة شنعاء ساقت % إلى مجترها حمدا وذكرا % % 6(@)(@@) % أرى أفعالكم أفعال عز % فلم أنتم بفرط الذل أحرى % % PageV01P419 البحر : - 1(@)(@@) % دنو المدامة يدني السرورا % % فصل باغتباقك منها البكورا % % 2(@)(@@) % فقد 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms105# نشر الصبحأعلامه % % و حان لكاساتها أن تدورا % % 3(@)(@@) % تعجبت من غفلات الورى % % و تركهم العيش غضا نضيرا % % 4(@)(@@) % فطائفة ترتجي جنة ال % % خلود وأخرى تخاف السعيرا % % 5(@)(@@) % ألا فسقني الخمر مشمولة % تصب على الليل صبحا منيرا % % 6(@)(@@) % موردة اللون مسكية % تعز الذليل وتغني الفقيرا % % 7(@)(@@) % كأن العقيق بكاساتها % % تفض السقاة عليها العبيرا % % 8(@)(@@) % صريع النوائب من لم يكن % جليدا على الهول منها صبورا % % 9(@)(@@) % فكن موقنا بذهاب الصبا % % و مغتنما منه دهرا قصيرا % % 10(@)(@@) % فإن الشباب له مدة % تفضفتذهب عنك السرورا % % PageV01P420 البحر : - 1(@)(@@) % أقررت في شكرك بالتقصير % إذ زدت في البر على التكثير % 2(@)(@@) % و جاءني من سيبك الغزير % مراكب مخطفة الخصور % 3(@)(@@) % مسودة الأعجاز والصدور % سود عليها رونق الذكور % 4(@)(@@) % كأنما قدت من الديجور % و من نفيس الأدم المبشور % 5(@)(@@) % كل غريب الحسن مستنير % أخضر مثل الشارب المطرور % 6(@)(@@) % ذي سمة مغموسة في النور % كصفحة الدينار ذي السطور % 7(@)(@@) % و مخطفات كالعذارى الحور % مشمرات القمص كالمنثور % 8(@)(@@) % كل فتاة نشأت بحور % تختال في دوجها القصير % 9(@)(@@) % حاسرة عن أرج حسير % مثل نسيم الزهر الممطور % 10(@)(@@) % تبرد منه علل الصدور % أشهى من الوصل إلى المهجور % PageV01P421 البحر : - 1(@)(@@) % قل لابن حرب قد جني % ت عليك حربا فاصطبر % % 2(@)(@@) % أنت الذي بسقوطه % % يدعى أبوه أبو العبر % % 3(@)(@@) % لم عبت شعريو هو أو % % ضاح تبسم أو غرر % % 4(@)(@@) % أحرمت نشر العنبر ال % % ورد الذي منه انتشر % % 5(@)(@@) % أم قد منعت الفكر في % % ه كما منعت من النظر % % 6(@)(@@) % إني لأرحم شاعرا % حرم البصيرة والبصر % % PageV01P422 البحر : - 1(@)(@@) % لو رحبت كاس بذي أوبة % لرحبت بالورد إذ زارها % % 2(@)(@@) % جاء فخلناه خدودا بدت % مضرمة من خجل نارها % % 3(@)(@@) % كأنما خير في روضة % طرائف الكسوة فاختارها % % 4(@)(@@) % و عطر الدنيا فطابت به % % لا عدمت دنياك عطارها % % 5(@)(@@) % قد خلع القطر جلابيبه % % إلا شظاياها وأزرارها % % PageV01P423 البحر : - 1(@)(@@) % يوم خلعت به عذاري % % فعريت من حلل الوقار % 2(@)(@@) % و صبوت فيه إلى الصبا % % و الشيب يضحك في عذاري % % 3(@)(@@) % متلون يبدي لنا % % طرفا بأطراف النهار % 4(@)(@@) % فهواؤه سكب الردا % % ءو غيمه صافي الإزار % 5(@)(@@) % و سماؤه تخبو الربى % % بشبيه مكنون البحار % 6(@)(@@) % تبكي فيجمد ماؤها % % و البرق يكحلها بنار % PageV01P424 البحر : - 1(@)(@@) % و شمعة في يد الغلام 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms106# حكت % عنق ظليم بغير منقار % 2(@)(@@) % تبكيإذا نار شوقها اضطرمت % بدمع تبر من الأسى جاري % % 3(@)(@@) % كأنها نخلة بلا سعف % تحمل أترجة من النار % PageV01P425 البحر : - 1(@)(@@) % يا من أنامله كالعارض الساري % % و فعله أبدا عار من العار % 2(@)(@@) % أما ترى الثلج قد خاطت أنامله % % ثوبا يزر على الدنيا بأزرار % 3(@)(@@) % نار و لكنها ليست بمبدية % نورا و ماء ولكن ليس بالجاري % % 4(@)(@@) % و الراح قد أعوزتنا في صبيحتنا % % بيعا و لو وزن دينار بدينار % PageV01P426 البحر : - 1(@)(@@) % خيش ابن رستم يحمى و هو ممطور % أخنى الهجير عليهفهو مهجور % 2(@)(@@) % و لو يطيبو لو علت سرايجه % % بالراحخالطها مسك وكافور % 3(@)(@@) % يرشهو الندامى يغرقون به % % كأنه لدوام الرش ممطور % 4(@)(@@) % فإن يكن خيشه في الحر ملتهبا % فإن كانونه في القر مقرور % PageV01P427 البحر : - 1(@)(@@) % ونى في التصابي بعدما كان شمرا % % و قصر في شأو الزمانفأقصرا % % 2(@)(@@) % و شاب بلون الصبح ليل شبابه % % فأصبح شتى الحلتين مشهرا % % 3(@)(@@) % و لا عاد رد المستعار مسلما % و قدم ريعان الصباو تأخرا % % 4(@)(@@) % فلم يبق إلا الراح بين كؤوسها % % مذاكرة كالروض جيدفأزهرا % % 5(@)(@@) % أحاديث لو يجتازها نفس الصبا % % تأرج من أنفاسهاو تعطرا % % 6(@)(@@) % و ساقية تشدو فتحسن شدوها % % و تبسم أحيانا فتحسن منظرا % % 7(@)(@@) % هجرت الندامى إذ بلوت خلالهم % % و نادمت كسرى في الزجاج وقيصرا % % 8(@)(@@) % أعريهما طورا و طورا أراهما % % يجران مصقول البنائق أحمرا % % 9(@)(@@) % فلو لم يكونا جوهرين كلاهما % % نفيسين ما حلا من الكاس جوهرا % % 10(@)(@@) % و هيج من وجدي حنين ابن قينة % إذا استنطقته بالأنامل زمجرا % % PageV01P428 11(@)(@@) % خفيف إذا لاقاك في ذهبية % مزنرة أرضاك مرأى ومخبرا % % 12(@)(@@) % براه صناع القلب والكف كلما % % تعذر معناه البديع تفكرا % % 13(@)(@@) % و ضمته رب المرط ينفض جسمها % % على جسمه مسكا ذكيا وعنبرا % % 14(@)(@@) % فساق قلوب الشربإذ حنغلبا % % و راق عيون البيض حين توقرا % % 15(@)(@@) % سأبعث حمدي غازيا وفر سيد % إذا ما غزاه الحمد عاد مظفرا % % 16(@)(@@) % كأن ثنائي غب جدواه مرتع % تبسم غب الساريات ونورا % % 17(@)(@@) % قديم على الأيام إن عد معشر ؛ % حديث المعالي عند عاد وحميرا % % 18(@)(@@) % تسهل ليفي أحمد الشعر طائعا % و لو رمته في غيره لتعذرا % % 19(@)(@@) % أطلتو ما استغرقت وصف خلاله % % فرحت مطيلا في 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms107# الثناء مقصرا % % 20(@)(@@) % أأحمدإني بين قوم تبرؤوا % % من العرف حتى قد حسبناه منكرا % % PageV01P429 21(@)(@@) % إذا نزلوا أبصرت للجهل ناديا ؛ % و إن رحلوا أبصرت للبخل عسكرا % % 22(@)(@@) % أقولو قد عاينتهم عدد الحصى % % عدمتك جيلا ما أقل وأكثرا % % 23(@)(@@) % كأنك فيهم شارق في دجنة % إذا أغبشت مربدة اللون أسفرا % % 24(@)(@@) % أتتك القوافي الغر تطلب حاجة % جزاؤك فيها أن تثاب وتشكرا % % 25(@)(@@) % غرائبلو نادين في المحل عارضا % أجابو لو ناشدن صخرا تفجرا % % 26(@)(@@) % عدلت عن النابي الكهام بحليها % % و ألبسته منك الحسام المذكرا % % 27(@)(@@) % فلا تردد العقد المفصل خائبا % بصدك عنه والرداء المحبرا % % PageV01P430 البحر : - 1(@)(@@) % أعاد الله عيدك بالسرور % و في الحال الجليلة والحبور % 2(@)(@@) % و لازالت سعودك طالعات % بما تهواه من عيش نضير % 3(@)(@@) % دفاع الله عنك أعم فضلا % و أحلى في القلوب وفي الصدور % 4(@)(@@) % أناصر دولة الإسلام صبرا % فإن الصبر من عزم الأمور % 5(@)(@@) % كبا الأعداء إذ راموك جهلا % فقلناللجباه وللثغور % 6(@)(@@) % هبوط لا يمكن من صعود ؛ % و موت لا يقرب من نشور % 7(@)(@@) % منانا أن تعمر ألف عام % و تصرف عنك أحداث الدهور % 8(@)(@@) % و أن تلقى العدا في النحر صرعى % % بحد ظباك دامية النحور % PageV01P431 البحر : - 1(@)(@@) % أما ترى حسن بنات البر % مقيدات في عباب البحر % 2(@)(@@) % مأسورة لولا وثاق الأسر % صدرن عنه خالعات العذر % 3(@)(@@) % نيط بها كل خفيف الخصر % سارو ما يبرح قيد شبر % 4(@)(@@) % تئن كالمضرور لا من ضر % تحصب منه بندى كالدر % 5(@)(@@) % فيومنا يوم صفا وقطر % فهاتها قبل نفاد العمر % 6(@)(@@) % و قبل مطوي بعيد النشر % داج على ساكنه مغبر % 7(@)(@@) % تخفي الفتى لولاها ماء الذكر % % PageV01P432 البحر : - 1(@)(@@) % لنا غرفة حسنت منظرا % % و طابت لسكانها مخبرا % % 2(@)(@@) % ترى العين من تحتها روضة ؛ % و من فوقها عارضا ممطرا % % 3(@)(@@) % و ينساب قدامها جدول % كما ذعر الأيم أو نفرا % % 4(@)(@@) % و راح كأن نسيم الصبا % % تحمل من نشرها العنبرا % % 5(@)(@@) % و عندي علق قليل الخلاف % و ندمان صدق قليلو المرا % % 6(@)(@@) % و دهماء تهدر هدر الفنيق % إذا ما امتطت لهبا مسعرا % % 7(@)(@@) % تجيش بأوصال وحشية % رعت زهرات الربا أشهرا % % 8(@)(@@) % كأن على النار زنجية % تفرج بردا لها أصفرا % % 9(@)(@@) % و ذي أربع لا يطيق النهوض % و لا يألف 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms108# السير فيمن سرى % % 10(@)(@@) % نحمله سبجا أسودا % فيجعله ذهبا أحمرا % % PageV01P433 11(@)(@@) % إذا قلب القر كف الفتى % % حمى حره الكف أن تخصرا % % 12(@)(@@) % و قد بكر العبد من عندنا % % يزف لك الطرف والممطرا % % 13(@)(@@) % فشمرهديت إلى لذة % فإن أخا الجد من شمرا % % PageV01P434 البحر : - 1(@)(@@) % لنا قهوة في الدن تمت شهورها % % فرقت حواشيها وأشرق نورها % % 2(@)(@@) % يحييك بالمسك الذكي دنوها % % و يلقاك بالبشر الجميل بشيرها % % 3(@)(@@) % و قد كتبت أيدي الربيع صحائفا % كأن سطور البرق حسنا سطورها % % 4(@)(@@) % فمن روضة سار إلينا نسيمها ؛ % و من مزنة مرخى علينا ستورها % % 5(@)(@@) % و غرفتنا الحسناء قد زاد حسنها % % بزائرة في كل عام تزورها % % 6(@)(@@) % بمبيضة الأحشاء سود شطورها % % مزنرة الأذناب حمر نحورها % % 7(@)(@@) % مرفرفة حول البيوت وفودها % % محلقة حول السقوف وكورها % % 8(@)(@@) % لهن لغات معجمات كأنها % % صرير نعال السبت عال صريرها % % 9(@)(@@) % تجاورنا حتى تشب صغارها % % فيلحق فينا بالكبير صغيرها % % 10(@)(@@) % فزرنا ترى اللذات بيضا وجوهها % % محببة روحاتها وبكورها % % PageV01P435 11(@)(@@) % و بادر إلى الراح التي أنت خلها % % فقد قام ساقينا الأغر يديرها % % PageV01P436 البحر : - 1(@)(@@) % ذكرناهفانهلت مدامعنا تترى % % مخبرة عن كل ذي كبد حرى % % 2(@)(@@) % عهدناك مخصوصا من البيت كله % % بمنزلة في الصدر أنت بها أحرى % % 3(@)(@@) % تظل لها رجلاك في قعر وهدة % إذا ما علت إحداهما هوت الأخرى % % 4(@)(@@) % و فوقك صفراوان إن شئت غنتا % % كذاكرتي فرخين شفهما الذكرى % % 5(@)(@@) % و كم أرسلت يمنى يديك رسولها % % فما لبثته حين صافحت اليسرى % % 6(@)(@@) % عجبت له طرفا يجر عنانه % و لا يتشكى الأين ما بعد المسرى % % 7(@)(@@) % يشق نقي المتن جعدا كأنه % % غدير تمشى الريح من فوقه حسرى % % 8(@)(@@) % فيا هالكا أعرى الصديق بهلكه % % و عز على تلك الأنامل أن تعرى % % 9(@)(@@) % إذا صغرت يوما رزية صاحب % بصاحبه كانت رزيتك الكبرى % % PageV01P437 البحر : - 1(@)(@@) % كأن تأجج كانوننا % % تكاثف نور من العصفر % 2(@)(@@) % و أحدث إخماده زرقة % تأجج في مدمج أحمر % 3(@)(@@) % كبركة جمر على قونها % % بقايا تفتح لينوفر % PageV01P438 البحر : - 1(@)(@@) % هل للمكارم من مجير % أم هل لأحمد من نصير % 2(@)(@@) % أنى ارتقت همم الردى % % منه إلى القمر المنير % 3(@)(@@) % بعد ابتسام شمائل % كالنور في الغصن النضير % 4(@)(@@) % يا رمةأرج الثرى % % من طيبهاأرج العبير % 5(@)(@@) % لو تستطيع الأرض ما % % سمحت 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms109# بها يوم النشور % 6(@)(@@) % نظرت إليك المكرما % % تفلم تجد لك من تظير % 7(@)(@@) % فغدت عليك حواسرا % ينظرن من طرف حسير % 8(@)(@@) % فاذهب على رغم العدا % % و البأس والحسب الخطير % 9(@)(@@) % فارقتني وتركتني % % غرضا لأحداث الدهور % 10(@)(@@) % فلبست أثواب الأسى % % و خلعت أثواب السرور % PageV01P439 البحر : - 1(@)(@@) % ينبيك عن صحة أخباري % % عسريو من العشقو إيساري % % 2(@)(@@) % و سوقة أفضلهم مرتد % نقصا ففخري بينهم عاري % % 3(@)(@@) % و كانت الإبرةفيما مضى % % صائنة وجهي وأشعاري % % 4(@)(@@) % فأصبح الرزق بها ضيقا % كأنهمن ثقبهاجاري % % PageV01P440 البحر : - 1(@)(@@) % خير أوقاتكفي اللذ % ذاتأوقات البكور % 2(@)(@@) % ليس يوم إن تقصر % ه اصطباحا بقصير % 3(@)(@@) % و الظريف الحر عن إخ % % وانه غير صبور % 4(@)(@@) % و لنا راح خلال الش % شرب لا راح العصير % 5(@)(@@) % ذات لون ونسيم % خلقا من ورد جور % 6(@)(@@) % و سقاة إن سقوا حي % يوا بريحان الصدور % 7(@)(@@) % و عدو لك في القر % ر صديق في الهجير % 8(@)(@@) % يستعير البرد والإش % % راق من برد الثغور % 9(@)(@@) % رق حتى كاد يفنى % % بإشارات المشير % 10(@)(@@) % فائتنا تلق الذي ته % % واه من عيش نضير % PageV01P441 البحر : - 1(@)(@@) % دعانا إلى اللهو داعي السرور % فبتنا نبوح بما في الصدور % 2(@)(@@) % و طافت علينا بشمس الدنا % % نفي غلس الليل شمس الخدور % 3(@)(@@) % كأن الكؤوسو قد كللت % بفضلاتها بأكاليل نور % 4(@)(@@) % جيوب من الوشي مزرورة % يلوح عليها بياض النحور % PageV01P442 البحر : - 1(@)(@@) % هات التي هي يوم البعث أوزار % كالنار في الحسنعقبى شربها النار % 2(@)(@@) % أما ترى الورد قد باح الربيع به % % من بعد ما مر حول و هو إضمار % 3(@)(@@) % و كان في خلع خضر فقد خلعت % % إلا عرى أغفلت منه وأزرار % PageV01P443 البحر : - 1(@)(@@) % صفر مدار نصبها شرف % مفتضح عند نشرها العطر % 2(@)(@@) % تحملها خيزرانة ذبلت % ذبول صب أذله الهجر % 3(@)(@@) % كأنهاإذ زهت بألسنة % أنطقها للمهيمن الذكر % 4(@)(@@) % خناجر من حناجر نزعت % فهي من الماءمن دم حمر % PageV01P444 البحر : - 1(@)(@@) % يا رب مقنعة حمراء تلبسها % % سوداء لليل من تركيبها قار % 2(@)(@@) % تلوح في العيدو الأبصار ترمقها % % كأنها فحمة في رأسها نار % PageV01P445 البحر : - 1(@)(@@) % أخرس ينبيك بإطراقه % عن كل ما شئت من الأمر % 2(@)(@@) % يذريعلى قرطاسهدمعة % تبدي لنا السر وما تدري % % 3(@)(@@) % كعاشق أخفى هواهو قد % % نمت عليه عبرة تجري % % 4(@)(@@) % تبصرهفي كل أحواله % % عريانيكسو الناسأو 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms110# يعري % % 5(@)(@@) % يرى أسيرا في دواة و قد % % أطلق أقواما من الأسر % PageV01P446 البحر : - 1(@)(@@) % و بديعة أضحى الجمال شعارها % % صبغ الحياء رداءها وإزارها % % 2(@)(@@) % حلت نسيم عقالهاو توشحت % بالأرجوانو شددت أزرارها % % 3(@)(@@) % فالعين تحسرإن رأت إشراقها ؛ % و النفس تنعمإن بلت أخبارها % % 4(@)(@@) % فكأنهافي الكف وجنة عاشق % عبث الحياء بهافأضرم نارها % % 5(@)(@@) % محمولة حملت عجاجة عنبر % فإذا سرى ركب النسيم أثارها % % 6(@)(@@) % أمنتعلى أسرارهاريح الصبا % % وهنا فضيعت الصبا أسرارها % % 7(@)(@@) % و كأنما صافحت منها جمرة % أمنت يمينك حرها وشرارها % % 8(@)(@@) % ما أحسب النارنج إلا فتنة % هتك الزمان لناظر أستارها % % 9(@)(@@) % عشقت محاسنه العيونفلو رنت % أبدا إليهلما قضت أوطارها % % PageV01P447 البحر : - 1(@)(@@) % و روض كساه الغيثإذ جاد أرضه % % مجاسد وشي من بهار ومنثور % 2(@)(@@) % به أبيض الورد الجنيكأنما % % تبسم للناشي بمسك وكافور % 3(@)(@@) % كأن اصفرارا منه فوق ابيضاضه % برادة تبر في مداهن بلور % PageV01P448 البحر : - 1(@)(@@) % و جندبة تمشي بساق كأنه % % على فخد كالعودمنشار عرعر % 2(@)(@@) % مكتبة تجلو الجناح كأنها % % عروس تجلت في عطاف معنبر % PageV01P449 البحر : - 1(@)(@@) % لسانك السيف لا يخفى له أثر % و أنت كالصل لا تبقي ولا تذر % 2(@)(@@) % سري لديك كأسرار الزجاجةلا % % يخفى على العين منها الصفو والكدر % 3(@)(@@) % فاحذر من الشعر كسرا لا جبار له % % فللزجاجة كسر ليس ينجبر % PageV01P450 البحر : - 1(@)(@@) % و ليلة من نقمات الدهر % قطعتها نزر الكرى والصبر % 2(@)(@@) % مكلم الصدر جريح النحر % مقسما بين أعاد خزر % 3(@)(@@) % كمت إذا عاينتهاو شقر % كأنها آثارها في الأزر % PageV01P451 البحر : - 1(@)(@@) % و منزل يتحامى أهله الخفر % و يفضل البدوفي نعمائهالحضر % 2(@)(@@) % فيه مع الناس أشباه لهم بعدت % في الزي عنهنإن لم تبعد الصور % 3(@)(@@) % فمن ذكور عراة كالذكور به % % و من إناث عليها الوشي والحبر % 4(@)(@@) % بدائع لطفت أفكار مبدعها % % حتى تفجر عن ماء بها الحجر % 5(@)(@@) % فكل ناحية من جدره صنم % و كل ناحية من سقفه قمر % 6(@)(@@) % صفت عن الناس فيه نعمة وصفت % فكل صفو نعيم عندهاكدر % PageV01P452 البحر : - 1(@)(@@) % لست بناف خمار مخمور % إلا بصافي الشراب مقرور % 2(@)(@@) % يطير عن رأسه القناعإذا % % نفست عنه خناق مزرور % 3(@)(@@) % رام بسهم كأنه خضر % و طيب نشر نسيم كافور % 4(@)(@@) % يميل أعلاهو هو مهتضب % كأنه صولجان بلور % PageV01P453 البحر : - 1(@)(@@) % و أزهر وضاح يروق عيوننا 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms111# % % إذا ما رميناه بلحظ النواظر % 2(@)(@@) % له أربع تأبى السرى غير أنها % % تصافح وجه الأرض مثل الحوافر % 3(@)(@@) % تقل جسوما بعضها من مورد % و سائرها في مثل صبغ الدياجر % 4(@)(@@) % نواصله أيام للقر سطوة % و نهجره أيام لفح الهواجر % PageV01P454 البحر : - 1(@)(@@) % أسعيد هل لك في زيارة منزل % تثني عليه جوانح الزوار % 2(@)(@@) % رحب تلاقي الجدر منه ينابع % و ترى السماء عليه كالأقمار % 3(@)(@@) % ينضو الحيي الوجه ثوب حيائه % % فيهفيخطر كالحسام العاري % % 4(@)(@@) % متقلبا في نعمة فضفاضة % جعلت له عوضا من الأطمار % 5(@)(@@) % ما عاين البادون يوما فضله % % إلا وأحفظهم على الحضار % 6(@)(@@) % و لربما استمتعت فيه بنزهة % لولاه لم تبرز من الأستار % 7(@)(@@) % و ترى على جدرانه بهم الوغى % % يخطرن ما بين القنا الخطار % 8(@)(@@) % سلت سيوفهم بغير بوارق % و جرت جيادهم بغير غبار % 9(@)(@@) % زحفان لم يحظ العزيز برتبة % فيهمو لا آب الذليل بعار % 10(@)(@@) % و منعمينعن الشمال بمعزل % لبسوا السعود بغفلة الأقدار % PageV01P455 11(@)(@@) % هذا يناوله النديم تحية % حسنتو ذا يحظى بكأس عقار % 12(@)(@@) % عيش لهم بعدت حقيقتهو إن % % قربت محاسنه من الأبصار % 13(@)(@@) % حتى إذا نعمت به أجسامنا % % و قضت به وطرا من الأوطار % 14(@)(@@) % ملنا إلى حسن الصبوح وطيبه % % إن الصبوح مطية الأحرار % 15(@)(@@) % و أحق يوم بالمدام وشربها % % يوم حباك بديمة مدرار % PageV01P456 البحر : - 1(@)(@@) % و منزل نزلته ابتكارا % % معاقرا في ظله العقارا % % 2(@)(@@) % ترى به معركة جهارا % % و قسطلا من حولها أشارا % % 3(@)(@@) % محارتين انضمتا جوارا % % قد منعت إحداهما القرارا % % 4(@)(@@) % لا يعدمان لؤلؤا صغارا % % يطيره حربهما غبارا % % 5(@)(@@) % في موقف يستوقف الأبصارا % % يكحل من قسطله الزوارا % % 6(@)(@@) % حتى يشيب منهم الأشفارا % % فلم نزل نأخذها نهارا % % 7(@)(@@) % محمرة تحسب جلنارا % % و الريح يدمي وقعها الأبشارا % % 8(@)(@@) % حربا ترى في حربنا الأحرارا % % حتى إذا الليل البهيم جارا % % 9(@)(@@) % و أسبلت ظلمته الأستارا % % و انتثر الثلج به انتثارا % % 10(@)(@@) % كما أطرت كرسفا فطارا % % كانت لنا نورا به ونارا % % PageV01P457 البحر : - 1(@)(@@) % أيها المطلون بعدي حذار % إن بعض الصخور طالب ثار % 2(@)(@@) % رب يوم ظللت فيه وقيدا % أتشكى حريق نار بنار % 3(@)(@@) % مئزر كان غاية النفع أضحى % % و هو اليوم غاية الأضرار % 4(@)(@@) % و سراويل سندس عاد وشيا % مؤلما جافيا على الأبشار 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms112# % 5(@)(@@) % فكأن الأفخاذ تلذع منه % % بشرار يطير إثر شرار % 6(@)(@@) % أخذت ثأرها الحجارة مني % % و سوائي أصابها بالثار % PageV01P458 البحر : - 1(@)(@@) % و فتية تعلو بها أخطارها % % رواحها للمجد وابتكارها % % 2(@)(@@) % و ما اشتهتأنفسهاشعارها % % تطربت لنزهة أقمارها % % 3(@)(@@) % فيممت مؤنسة أقطارها % % تعوم في غدرانها أطيارها % % 4(@)(@@) % قد حليت بزهرها أشجارها % % و صندلت بمدها أنهارها % % 5(@)(@@) % بمطمعات حصنت ديارها % % نجار خطي القنا نجارها % % 6(@)(@@) % تصان من بهجتها أبشارها % % صون العذارى أسبلت أستارها % % 7(@)(@@) % مصفرة ما شانها اصفرارها % % أحسن من منظرها أخبارها % % 8(@)(@@) % ترجي حسانا قبحت آثارها % % أفتك من كبارها صغارها % % 9(@)(@@) % فلست أدريأيها خيارها % % تلفح مجتاز الهواء نارها % % 10(@)(@@) % ما طار في آثارها شرارها % % طاعته لفتية تختارها % % PageV01P459 11(@)(@@) % يقعن فيما وقعت أبصارها % % حتى إذا الشمس ضبا استعارها % % 12(@)(@@) % و اصفر من مغربها إزارها % % و حان من واردة إصدارها % % 13(@)(@@) % حمر على أيديهم بوارها % % فصرعت موشية أطمارها % % 14(@)(@@) % في حلل قد شددت أزرارها % % يضحك في لجينها نضارها % % 15(@)(@@) % وفي سواد ليلها نهارها % % كروضة مختلط نوارها % % PageV01P460 البحر : - 1(@)(@@) % هذا أوان ثمار له % % وك فاجن بالكاس الثمارا % % 2(@)(@@) % إن الصغار صغيرة % فاغش الكبائر والكبارا % % 3(@)(@@) % سفرت لنا الدنياو كم % % ألقت محاسنها الخمارا % % 4(@)(@@) % و رأيت نرجسها على % % لباتها حليا معارا % % 5(@)(@@) % إن حل حل به السرو % % ر مخيما أو سار سارا % % 6(@)(@@) % ما كان قبل كأنه % % مرض العيون لها شعارا % % 7(@)(@@) % لكنه أزرى بها % % فمرضن ذلا وانكسارا % % PageV01P461 البحر : - 1(@)(@@) % يا رب نائية كأن ضرامها % % دان إذا شمناه بالأبصار % 2(@)(@@) % خفقت كما خفقت ذوائب راية % حمراء في لدن الذرى خطار % 3(@)(@@) % تفري من الليل البهيم سرادقا % دون النواظر مغدف الأستار % 4(@)(@@) % عبثت بها ريح الصبافكأنها % % كف تشير ببارق وسوار % 5(@)(@@) % يا حبذا هي في سرادق ليلنا % % و الصبح يفضح كامن النوار % PageV01P462 البحر : - 1(@)(@@) % أحبب إلي بإلف ذي مساعدة % لا أتقي الكأس منه بالمعاذير % 2(@)(@@) % يقول خذهاو كف الصبح قد أخذت % في حل جيب من الظلماء مزرور % 3(@)(@@) % و كشف البيت ذو الأطناب صفحته % % كأنه فوق صرح من قوارير % 4(@)(@@) % بيت إذا خلع الديجور حلته % % لم يخلع الصبح عنه ثوب ديجور % 5(@)(@@) % مقيد في عباب الماء يسمعنا % % إذا أطفنا بهأنات مأسور % 6(@)(@@) % كأن دهما تبارت في السباق به % % دهم الجياد تبارت في المضامير 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms113# % 7(@)(@@) % إذا جرين على أرض ممسكة % أثرن بالجري منها نقع كافور % 8(@)(@@) % مازلت أشربها صرفا و أمزجها % % للظبيمن فلق الأحشاء مسجور % 9(@)(@@) % في مجلس راح طوع الريح تعنته % % أنفاسها بين تقديم وتأخير % 10(@)(@@) % له جناحان نحو الشرب خفقهما % % بلؤلؤ من حباب الماء منثور % PageV01P463 11(@)(@@) % غناؤنا فيه ألحان السكورإذا % % مل الغناءو جنات النواعير % 12(@)(@@) % كأنما الريح من طيب النسيم به % % تسري إلينا بريا الورد من جور % 13(@)(@@) % حتى مضى اليوم مبيضا شمائله % % و عارضت شمسه مصفرة النور % PageV01P464 البحر : - 1(@)(@@) % يا رب جسم كله نواظر % بآمق ليست لها محاجر % 2(@)(@@) % تستر عنك الشيء وهو ظاهر % محبوبة خلالها الغوادر % 3(@)(@@) % إذا ارتدتها اللجج الزواخر % و ضمها مثل المراة مائر % 4(@)(@@) % جاءت من الرزق بها جواهر % صغائر تومض أو كبائر % 5(@)(@@) % كأنهاإذا انتحاها الناظر % مخازن الفضةأو خناجر % PageV01P465 البحر : - 1(@)(@@) % و مخطف الخصر برده حبر % نحذرهو هو خائف حذر % 2(@)(@@) % مجنح طار في مجنحة % تصعد طورا به وتنحدر % 3(@)(@@) % كأنهاو الرياح تنشرها % % غرائب الزهر حين ينتثر % 4(@)(@@) % لها حمات كأنها شعر % تظهر مسودة وتستتر % 5(@)(@@) % قد أذهبت في الجبين غرته % إذ فضضتفي جيادهاالغرر % 6(@)(@@) % سلاحهالدهرفي مؤخره % يفتك طورا به وينتصر % 7(@)(@@) % كأنما شطر ما يجرده % من بين فكيه حية ذكر % PageV01P466 البحر : - 1(@)(@@) % بعثت بها عذراء حالية النحر % مشهرة الجلباب حورية النجر % 2(@)(@@) % تأنى لها طب بإخلاص طيبها % % فأفرغ فيها روح ريحانة الزهر % 3(@)(@@) % و ألبسها وشيا يزر جيوبه % % على النحر منهاو الذيول على الخصر % 4(@)(@@) % مضمنة ماء صفا مثل صفوها % % فجاء كذوب التبر في جامد الدر % 5(@)(@@) % ينوببكفيعن أبيهو قد مضى % % كما نبت عن آبائك السادة الغر % 6(@)(@@) % و يشركني في نشره الريح غدوة % فتجري إلى الآفاق طيبة النشر % 7(@)(@@) % فيا لك من بر يخبر عن فتى % حفي بنافي كل نائبة بر % 8(@)(@@) % فإن يك حياني بها فارسية % فسوف أحييه بمعربة بكر % % 9(@)(@@) % و كم من يد للحر عندي ثيب % كشفت محياها بقافية بكر % PageV01P467 البحر : - 1(@)(@@) % لو تداركتني بوعد غرور % رقأت عبرتيو قل زفيري % % 2(@)(@@) % بأبي خدك الذي وقف الدم % % ع عليه كالطل في ورد جور % 3(@)(@@) % فالتهاب الحياء يمزج فيه % % حمرة الأرجوان بالكافور % 4(@)(@@) % عبق ريحه كأن دموع ال % % عين أجرت عليه ماء العبير % 5(@)(@@) % لا تلمني 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms114# على انتثار دموعي % % حين عاينت روضة المنثور % 6(@)(@@) % قابلتني بمثل خدك والثغ % % ر وأنوار حليك المستنير % PageV01P468 البحر : - 1(@)(@@) % لست أرجي انحطاط أوزاري % % ما عمر الله أم عمار % 2(@)(@@) % رضيت بالعار في المجونو هل % % يسخط مثلي تتابع العار % 3(@)(@@) % و جار شيبي علي مجتهدا % فما أرى الشيب أهل إكبار % 4(@)(@@) % و شادن لا يزال يمنحني % % إذا انتشى قبلة بدينار % 5(@)(@@) % تريك أجفانه ونخوته % % ذل ضعيف وتيه جبار % 6(@)(@@) % فالدعص والغصن في غلائله % % و الليل والصبح فوق أزرار % 7(@)(@@) % و النحر والخصر منه قد قسما % % بين صليب وبين زنار % 8(@)(@@) % دنا من الدن حاسرا فجرى % % منه عقيق ينسل من قار % 9(@)(@@) % كشاطر هم بالعدو فما % % أقصر حتى رأى دما جاري % % 10(@)(@@) % فرجي عفيف عن الحرام ول % % كن لساني لسان عيار % PageV01P469 البحر : - 1(@)(@@) % آثار جودك في الخطوب تؤثر % و جميل بشرك بالنجاح يبشر % 2(@)(@@) % كان ابتداؤك شيمة عدوية % تنبي عن الكرم التليد وتخبر % 3(@)(@@) % و صنيعة سمع الملوك بفضلها % % و الجود يسمع والصنائع تشهر % 4(@)(@@) % فعلام كف المنع منك أناملي % % و سماء كفك بالمواهب تمطر % 5(@)(@@) % لي من نوالك كل شهر عادة % مضت الليالي دونها والأشهر % 6(@)(@@) % فابسط بها باعا يطول إلى الندى % % فيضيق باع الخطب فيه ويقصر % 7(@)(@@) % إن كان لي أمل سواك أعده % فكفرت أنعمك التي لا تكفر % PageV01P470 البحر : - 1(@)(@@) % و ندمان دعوت إلى العقار % و قد فضح الدجى ضوء النهار % 2(@)(@@) % فقلتألا تقوم إلى عروس % أتت في حلة من جلنار % 3(@)(@@) % فقام وفي جوارحه فتور % و في أجفانه سنة الخمار % 4(@)(@@) % و مقلته تخبر من رآها % % بما سرقته من لون العقار % PageV01P471 البحر : - 1(@)(@@) % يا حبذا تحية % رحت بها مسرورا % % 2(@)(@@) % إذ جاءني يحملها % % ظبي يباهي الحورا % % 3(@)(@@) % شبهتها في كفه % و قد كساها نورا % % 4(@)(@@) % مخزنة من ذهب % قد ملئت كافورا % % PageV01P472 البحر : - 1(@)(@@) % قصاراك في اللوم أن تقصرا % % و حقي في الغي أن أعذرا % % 2(@)(@@) % و لم أنس يومي بقطربل % و ليلي على القفصأو عكبرا % % 3(@)(@@) % زمان تمليته مقبلا % و عيش تلقيته مسفرا % % 4(@)(@@) % و ملآن من عبرات الكروم % كأن على فمه عصفرا % 5(@)(@@) % إذا قربته أكف السقاة % من الكأس قهقه واستعبرا % % 6(@)(@@) % تروحه عذبات الغرام % بريا النسيمإذا ما جرى % % 7(@)(@@) % و ريم 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms115# إذا رام حث الكؤو % % سقطب للتيه واستكبرا % % 8(@)(@@) % و جرد من طرفه خنجرا ؛ % و من نون طرته خنجرا % % 9(@)(@@) % ترى ورد وجنته أحمرا % و ريحان شاربه أخضرا % % 10(@)(@@) % شكرنا لإدريس أفعاله % % و حق لإدريس أن يشكرا % % PageV01P473 11(@)(@@) % عرفنا به طرق المنكرات % و لولاه لم نعرف المنكرا % % 12(@)(@@) % فطورا يعيد لنا كدة ؛ % و طورا يعيد لنا شوذرا % % 13(@)(@@) % إذا عمرت داره لم أطل % بكاي على منزل أقفرا % % 14(@)(@@) % و إن قدمت يومه النائبات % فلست أسر بمن أخرا % % PageV01P474 البحر : - 1(@)(@@) % نل من الأيام ثارا % % و انتصر منها انتصارا % % 2(@)(@@) % بشراب يشبه التف % % فاح طيبا واحمرارا % % 3(@)(@@) % و شقيق جاده الغي % % ث رواحا وابتكارا % % 4(@)(@@) % مثل ما أترع ساقي الر % راح أقداحا صغارا % % PageV01P475 البحر : - 1(@)(@@) % كفرتو لم أشكر نصيحة فارس % و كم من نصيح مثله حرم الشكرا % % 2(@)(@@) % أراني طريق الاعتزالو لم يرد % % سوى أن أسب اللهو العالم الطهرا % % 3(@)(@@) % سأستأذن القرآن فيما دعوتني % % إليهو لا أعصي لمنزله أمرا % % PageV01P476 البحر : - 1(@)(@@) % أبا حسن إن وجه الربيع % جميل يزان بحسن العقار % 2(@)(@@) % فإن الربيع نهار السرو % % ر والراح شمس لذاك النهار % 3(@)(@@) % و إنك مشرقهاإن أردت % و إن لم ترد غربت في استتار % 4(@)(@@) % فأجر إلي بجار العقار % فمن فيض كفيك فيض الجرار % % 5(@)(@@) % فقد عبأ الهم لي جيشه % % و ليس له غير جيش الخمار % PageV01P477 البحر : - 1(@)(@@) % خليليإن الغيث أوله قطر % و نار الهوى قد صار دخانها جمر % 2(@)(@@) % فلا تعذلاني إن هويتفإنني % % هويت رجاء أن يساعدني الدهر % 3(@)(@@) % فلما أبان الدهر لي غدر أهله % % توليت عنهمإذ تداركني الصبر % 4(@)(@@) % فكم من محب قد تبين غدره % فرام اصطبارا فاستقاد له الصبر % 5(@)(@@) % فلم يك قلبي في الهوى مثل قلبه % % فلله حمد دائم و له الشكر % 6(@)(@@) % سأترك من أهوى بما هو أهله % % و لو كان من أهوى يشاكله البدر % 7(@)(@@) % و أصبو إلى قول الذي قد عرفتما % % ألا سقني خمرا و قل لي هي الخمر % 8(@)(@@) % ألا سقياني من سلافة خمرة % يجانبها المحمود والأبله الغمر % 9(@)(@@) % مصفقة كأسا كأن شعاعها % % تورد خد حين يبدو به السكر % 10(@)(@@) % فإن كسروها بالمزاج حكت لنا % % غلائل عشاق أضر بهم هجر % PageV01P478 11(@)(@@) % فلا خير في القربى إذا ما 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms116# مللتني % % و لا خير في نعمى يقاربها كفر % PageV01P479 البحر : - 1(@)(@@) % عنت تحاوره بطرف أحور % يوم النوى و بورد خد أحمر % 2(@)(@@) % و نظام ثغر ما تهلل وشيه % % إلا بكى خجلا نظام الجوهر % 3(@)(@@) % يهدي إليك نسيمهفكأنما % % شيبت جوانبه بمسك أذفر % 4(@)(@@) % غصن تعالى في كثيب أعفر ؛ % ليل تداجى في صباح مسفر % 5(@)(@@) % شمس يهب على القلوبإذا بدت % عن صحن وجنتهانسيم العنبر % 6(@)(@@) % لم يجتذب طرفا شمائل طرفه % % إلا ثنته حائرا في المحجر % 7(@)(@@) % قرأت علي بزفرة ألفاظها % % آيات شوق في حشاها مضمر % 8(@)(@@) % فكأنما نظرت إلي بناظر % و تحدثت عن قلبي المستهتر % 9(@)(@@) % خلعت لواحظها على وجناتها % % خلع الجوانح بالدموع الهمر % 10(@)(@@) % و تساقطت في وردهافكأنها % % طل تساقط فوق ورد أحمر % PageV01P480 11(@)(@@) % وصلتو لا وقديم حرقة هجرها % % ألا أستلذ الوصل ما لم أهجر % 12(@)(@@) % عطفت علي بصوب ماء وصالها % % عطف الحسين على رجاء المقتر % 13(@)(@@) % ملك أذل الوفد جود يمينه % % حتى تغور في العلاء الأكبر % 14(@)(@@) % تحكي يميناه يميني عابد % و يقولإن لم أحكه لم أعذر % 15(@)(@@) % و كذا الفتى إن لم يذكر سيفه % % و فعاله بصلاته لم يذكر % 16(@)(@@) % شغلت روائحه العجاجو طيبها % % بين القناعن طيب ريح المجمر % 17(@)(@@) % لقرينه بين الصفوف سحائب % موصولة بسحاب ريح صرصر % 18(@)(@@) % يلقى العدو بسيفه وجبينه % % و يقول ليس يكون ما لم يقدر % 19(@)(@@) % تأبى معالي مجده أن يكتسي % % رعدا لقرن أو يرى في مغفر % 20(@)(@@) % أي القلوب أزاره سطواته % % عن سطوة منهفلم يتفطر % % PageV01P481 21(@)(@@) % أم أي وهم رام كنه صفاته % % متحيرا فيهفلم يتحير % 22(@)(@@) % عجل الرماح إلى الأعاديمسعر % يأبى سوى طعن الشجاع المسعر % 23(@)(@@) % و إذا ارتقى درج العلا قالت له % % أوفيت أقصى المرتقى فتصدر % 24(@)(@@) % يقظ إذا اتقدت عزائم رأيه % % أخمدن رأي الناكب المتجبر % 25(@)(@@) % يا أيها الآمالأنت صوائب ؛ % هذا الحسين أبو الحسينفأقصري % % 26(@)(@@) % حطى رحالك بين خمس يمينه % % فلقد تقوم مقام سبعة أبحر % PageV01P482 البحر : - 1(@)(@@) % و ذي غنج يرنو بمقلة جؤذر % متى يغد فيه خالع العذر يعذر % 2(@)(@@) % له فوق ورد الخد خال كأنه % % إذا احمر ورد الخدنقطة عنبر % PageV01P483 البحر : - 1(@)(@@) % ذو قلم عز جانباه % فذا نعيم و ذا بوار % 2(@)(@@) % مثقف كله سنان % و منصل كله غرار % 3(@)(@@) % يفيض في 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms117# الطرس منه بحر % يمده السبعة البحار % PageV01P484 البحر : - 1(@)(@@) % كيف يخشى الملحي رقة حال % بعد أن فاز من قفاه بكنز % 2(@)(@@) % و له غرفة يؤلف فيها % % بين تيس من الرجال وعنز % 3(@)(@@) % صافه عرضهفنجاه مني % % إن عرض الملحي أمنع حرز % 4(@)(@@) % قد لعمري رفعته بهجائي % % و ارتفاع المصلوب ليس بعز % 5(@)(@@) % فإذا ما وخزته بسنان الذم % % لم يمتعض لشدة وخزي % % PageV01P485 البحر : - 1(@)(@@) % و مستدير بلا قطب يدور به % و لا له وتد في الأرض مركوز % 2(@)(@@) % كأنه فلك تنقض أنجمه % إذا تصوب من كيزانه كوز % PageV01P486 البحر : - 1(@)(@@) % لما أجد الليل في انحيازه % % و لاح ضوء الصبح من أعجازه % % 2(@)(@@) % دعوت سعدا فأتى ببازه % تحمل يسراه على قفازه % % 3(@)(@@) % ضامن زاد جد في إحرازه % % ندبا هوان الطير في إعزازه % % 4(@)(@@) % أقرانه تنكل عن برازه % % يبادر الفرصة في انتهازه % % 5(@)(@@) % كأنما راح إلى برازه % % فابتزه الموشي من طرازه % % 6(@)(@@) % فصاد قبل الشد في اجتيازه % % خمسينحزناهن باحتيازه % % 7(@)(@@) % ما أسلف البرفلم يجازه % % و لا خلا في الوعد من إنجازه % % PageV01P487 البحر : - 1(@)(@@) % ألا عد لي بباطية وكاس % ورع همي بإبريق وطاس % 2(@)(@@) % و ذكرني بشعر أبي نواس % على روض كشعر أبي نواس % 3(@)(@@) % و غيم مرهفات البرك فيه % % عوار و الرياض به كواسي % % 4(@)(@@) % و قد سلت جيوش الفطر فيه % % على شهر الصيام سيوف باس % 5(@)(@@) % و لاح لنا الهلال كشطر طوق % على لبات زرقاء اللباس % PageV01P488 البحر : - 1(@)(@@) % در الخطوب على الفوارس % و طلابها الصيد الأشاوس % 2(@)(@@) % و الدهر يطرق بالفوا % % دح أو يصبح بالدهارس % 3(@)(@@) % غاز يظفر بالنفو % % سو بالذخيرات النفائس % 4(@)(@@) % أردى مقاول تبع % و سطا على أحرار فارس % 5(@)(@@) % غاداهم متنمرا % فغدت سعودهم مناحس % 6(@)(@@) % و ملوك كندة حط عن % % تلك الأسرة والقرابس % % 7(@)(@@) % مازال يعمل فيهم % طعن المصالت والمخالس % % 8(@)(@@) % فابتزهم محمرة الت % تيجانأو شهب القوانس % % 9(@)(@@) % و كذاك أطفأ من أبي % % قابوس جمرة كل قابس % % 10(@)(@@) % و أصاب جبار المدا % % ئنقائم الفئتين جالس % % PageV01P489 11(@)(@@) % متفيئا ظل السيو % % فو تارة ظل الفرادس % % 12(@)(@@) % يغدو الخميس أمامه % % جم الغماغم والوساوس % % 13(@)(@@) % و الناس أعراض الحتو % % ففمطلق سهما وحابس % % 14(@)(@@) % ترمي القصور الواضحا % % ت بهم إلى الغبر الدوارس % % 15(@)(@@) % إني لمن قوم مضوا % % شم المآثر والمعاطس % 16(@)(@@) % راع 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms118# يسير القوم تح % % ت لواء منكبه وسايس % % 17(@)(@@) % و فتىإذا قيس الغما % % م بنيله ظلم المقايس % % 18(@)(@@) % يهدى له در المحا % % مد حشو أصداف القراطس % % 19(@)(@@) % ما نيل مجدهموإني % % يلمس الجوزاء لامس % % 20(@)(@@) % قصدتهم رقش الحوا % % دث بين ناهسة وناهس % % PageV01P490 21(@)(@@) % و ثنت إليهم أوجه الن % نكبات باسلة عوابس % 22(@)(@@) % و تنبهت منهم لبا % % قي العز والشرف القدامس % % 23(@)(@@) % فجعوا بأحمد مستضا % % م القرن مخترم المنافس % % 24(@)(@@) % عبق الحمائل والأعن % نةو القوائم والمعاجس % % 25(@)(@@) % ما لي أرى الربض اقشعر % ر لفقدهفتراه يابس % 26(@)(@@) % و ارتد مسود النها % % رو كان مبيض الحنادس % % 27(@)(@@) % و غدت تجر بساحتي % ه ذيولها النكب الروامس % % 28(@)(@@) % و لقد أراه مفوف ال % % أبراد مهتز المغارس % % 29(@)(@@) % حالي الرياض مصقل ال % % غدرانرقراق المجالس % % 30(@)(@@) % فكأنما انتثرت علي % % ه عقود لبات العرائس % % PageV01P491 31(@)(@@) % و كأنما اتشحت ربا % % ه مجاسد الغيد الأوانس % % 32(@)(@@) % و كأن راحة ريحه % % عبثت ببسباس البسابس % % 33(@)(@@) % و كأن يوم الدجن من % % ه لغرة المفقود شامس % % 34(@)(@@) % يا ابن السري سرى الغما % % م إليك بالغر الرواجس % % 35(@)(@@) % حتى يعود إليك غصن % % العود مخضر الملابس % % 36(@)(@@) % و لئن رحلت عن الأني % % س إلى محل غير آنس % % 37(@)(@@) % فالدهر ليس يفوت رك % % ض خطوبه ركض الفوارس % % 38(@)(@@) % أو ما رأيت ضراغم الد % دنيا لوثبته فرائس % % PageV01P492 البحر : - 1(@)(@@) % و عقفاء مثل هلال السما % % ء لكنها لبست سندسا % % 2(@)(@@) % عراقية لم يذب جسمها % % هزالا و لم تجس فيما جسا % % 3(@)(@@) % زبرجدة حسنت منظرا % و كافورة بردت ملمسا % % 4(@)(@@) % على رأسها زهرة غضة % كنجم الظلامإذا عسعسا % % 5(@)(@@) % حبانا بها مغرس طيب % من الأرض أكرم به مغرسا % % 6(@)(@@) % لها أخوات لطاف القدود % إذا ما تبرجن خضر الكسا % % 7(@)(@@) % محجبة عن شموس النهار % و بارزة لنسيم المسا % % 8(@)(@@) % تقوس في حين ميلادها % % و لم أر ذا صغر قوسا % % 9(@)(@@) % يطول اللسان بإطرائها % % و يصبح عن ذمها أخرسا % % PageV01P493 البحر : - 1(@)(@@) % فقدتأبا عمرانعرسا شفيقة % لها لوعة يدمى عليك رسيسها % % 2(@)(@@) % و كاتبةأقلامهاحين تنتضى % % حديد و أعناق النساء طروسها % % 3(@)(@@) % و أبقت فراخا حين أعدمن زقها % % تصرم نعماها وعاود بوسها % % 4(@)(@@) % فمن ذا يقيها السوء أم من ينجها % % دماء ذوات الذل أم من يسوسها % % 5(@)(@@) % تعز فإنا للحمام نفوسنا % % كذاك الغواني 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms119# للحمام نفوسها % % PageV01P494 البحر : - 1(@)(@@) % عفاء على اللذات من بعد فارس % فقد عطلت منه حسان المجالس % 2(@)(@@) % جلا حر وجه قد أضاء بثوبه % % كأن سناها فيه شعلة قابس % 3(@)(@@) % تكسر أصناف المعازف بعدها % % كما عقر الأفراس بعد الفوارس % 4(@)(@@) % مضى حسب الزفن التليدو أصبحت % رسوم الملاهي كالرسوم الدوارس % 5(@)(@@) % نعيم رمته الحادثات بفادح % فزالو سعد أردفته بناحس % 6(@)(@@) % و مختلس من حومة اللهو لم تنل % مقاتله أيدي الحمام المخالس % 7(@)(@@) % تسلب روض الياسرية بعده % % و كان جديد الحليغض الملابس % 8(@)(@@) % و جنت ثمار الرند وردا و طالما % % تصدعن ريا في رطاب موائس % 9(@)(@@) % يردد في غرس البطالةبعده % % عيونا تراه مقشعر المغارس % 10(@)(@@) % فما للتقى عار به مشهد الصبا % % و كاد المنى كيد العدو المنافس % PageV01P495 11(@)(@@) % و ما بال أعناق الكؤوس عواطلا % و كانت به في مثل حلي العرائس % 12(@)(@@) % و ما بال حانات العراق تنكرت % فأصبح منها موحشا كل آنس % 13(@)(@@) % أرى وردها ما بين مود وذابل % و ريحانها ما بين ذاو ويابس % 14(@)(@@) % فدتك نفيسات النفوس من الردى % % و مثلك يفدى بالنفوس النفائس % 15(@)(@@) % نسكتفلا ليل الغبوق بمقمر % عليناو لا يوم الصبوح بشامس % 16(@)(@@) % كأنك لم تحد الكؤوسو قد حدت % طليعة ضوء الصبح غير الحنادس % 17(@)(@@) % و لم تؤنس الشرب الكرام بمخطف % من الزنج حنان الغدو مؤانس % 18(@)(@@) % و قد فتق الإصباح رفق جفونهم % % و قارع طيب الغمض قرع النواقس % 19(@)(@@) % هوى درست أعلامه فكأنما % % ترامت به أيدي الرياح الروامس % 20(@)(@@) % و ربع شكا من فرقة اللهو ما شكت % ربوع التصابي من فراق الأوانس % PageV01P496 21(@)(@@) % فليس هزار الشدو فيه بناطق % و ليس قضيب الرقص فيه بمائس % 22(@)(@@) % أأرغب في اللذات من بعد فارس % و قد رميت من نسكه بالدهارس % 23(@)(@@) % فتبا لهاإذ تاب من نقر دفه % و لا سقيت صوب الغيوث الرواجس % PageV01P497 البحر : - 1(@)(@@) % من ذم إدريس في قيادته % فإنني حامد لإدريس % 2(@)(@@) % كلم لي عاصيا فكان له % % أطوع من آدم لإبليس % 3(@)(@@) % و كان في سرعة المجيء به % آصف في حمل عرش بلقيس % PageV01P498 البحر : - 1(@)(@@) % محلك من وصل الأحبة آنس % و غصنك من ماء الشبيبة مائس % 2(@)(@@) % تمتع من اللذات قبل نفادها % % و بادرفإنا للخطوب فرائس % 3(@)(@@) % ألا 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms120# حبذا المرج العليل نسيمه % % إذا نبهتني للصبوح النواقس % 4(@)(@@) % و مالت غصون زينتها مناطق % و لاحت شموس توجتها حنادس % 5(@)(@@) % و دارت على الندمان من خمر بابل % عروس حوت حسن الصباو هي عانس % 6(@)(@@) % ألم ترني أجررت في اللهو مقودي % % فأضحكت أياميو هن عوابس % 7(@)(@@) % و لم أعب بالوعد الذي وعد الورى % % فمنكان يرجوهفإني آيس % PageV01P499 البحر : - 1(@)(@@) % رأت شيئا يضاحكهافصدت % و كان جزاؤه منها العبوسا % % 2(@)(@@) % و قالتإذ رأت للمشط فيه % % سوادا لا يشاكله نفيسا % 3(@)(@@) % تلق العاج منه بمشط عاج % و دع للآبنوس الآبنوسا % % 4(@)(@@) % فإن أسيت لجرح الشيب نفسي % % فإن الشيب جرح ليس يوسى % % PageV01P500 البحر : - 1(@)(@@) % قد تركت عرس أبي جعفر % فؤاده في الحب مخلوسا % % 2(@)(@@) % و آثرت فيشة موسى لما % % غادره من بظرها الموسى % % 3(@)(@@) % فأطلقت فيها وفي بعلها % % كل لسان كان محبوسا % % PageV01P501 البحر : - 1(@)(@@) % إذا ما دعونا لاحقا ومعانقا % و قيد لدينا واثب ومخالس % 2(@)(@@) % فذلك يوم جانب السعد سربه % % و قوبل بالنحس الظباء الكوانس % 3(@)(@@) % كأن جلود الوحش بين كلابه % % و قد دميت أجيادها والمعاطس % 4(@)(@@) % مصندلة القمصان شقت جيوبها % % و رقرق فيها الزعفران الفرائس % PageV01P502 البحر : - 1(@)(@@) % إذا غضبتفلا تعجل بسيئة % فالعفو شأنكم يا آل عباس % 2(@)(@@) % و كن صفوحا فإن الصفح منقبة % أذكى من الوردغب القطرو الآس % 3(@)(@@) % فإنما الحمد مناو الثواب غدا % لكاظم الغيظ والعافي عن الناس % PageV01P503 البحر : - 1(@)(@@) % و جسوم إذا الرؤوس علتهن % ن أثارت حلت قواها الرؤوس % 2(@)(@@) % موتها من نفوسهاو عجيب % من جسوم بدنهن النفوس % PageV01P504 البحر : - 1(@)(@@) % بؤسا لعرس الخالدي بوسا % % أكل يوم تغتدي عروساحذف % % 2(@)(@@) % خلته و اعتاضت فتى نفيسا % % و فارقت من نتنه ناووساحذف % % 3(@)(@@) % فصادفت ربع هوى مأنوسا % % و بدلت من رخم طاووساحذف % % 4(@)(@@) % و كيف تهوى وجهه العبوسا % % و هي ترى الأقمار والشموساحذف % % PageV01P505 البحر : - 1(@)(@@) % قد أشكل الأمرفهل من فاحص % حتام لا أنفك من مقارص % 2(@)(@@) % مطارد شعري طراد قانص % لوى عن الدر يمين الغائص % 3(@)(@@) % و عاب إبريز الخلاص الخالص % و شاهدي بالفضل عيب الناقص % PageV01P506 البحر : - 1(@)(@@) % و لينوفر أوراقه الخضر تحته % % بساط إليه الأعين النجل شخص % 2(@)(@@) % إذا غاص في الماء النمير حسبته % رؤوس إوز في غياض تغوص % PageV01P507 البحر : - 1(@)(@@) % قد أغتدي قبل وجوب 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms121# الفرض % و الجفن قد ودع طيب الغمض % 2(@)(@@) % و بارق الأفق كليل الومض % كأنه عرق ضعيف النبض % 3(@)(@@) % بكل وافي الطرفين محض % مبتذل الوفر مصون العرض % 4(@)(@@) % قد نصبوا للحائن المنقض % قدا يعض الساق أي عض % 5(@)(@@) % ضعف عيون لم تشن بغض % لها مآق رسبت في الأرض % 6(@)(@@) % طارقها في قلق ونفض % يضرب بعض ريشه ببعض % 7(@)(@@) % بين علو موبق وخفض % و نهض لا منتفع بنهض % 8(@)(@@) % فكم رمت ذا بسطة بقبض % و أمسكت بكرا على مفتض % 9(@)(@@) % معاجل سوارها بفض % يا لك من آلة رزق غض % 10(@)(@@) % تملأ كفي رائد وترضي % % PageV01P508 البحر : - 1(@)(@@) % و مارقة مرق السهام تضمها % % قرارة مسجور طمى ثم عرمضا % % 2(@)(@@) % بعثت لها جسما لحاظ عيونه % % إذا أعرضتحتف لهن تعرضا % % 3(@)(@@) % ترحل عن أوطانه كل مكره % إذا بان عن أوطانه ساعة قضى % % 4(@)(@@) % و كل مليح القدإن نشر الردى % % عليه رداءلاح فيه وأومضا % % 5(@)(@@) % كأن يد المرتادإذا ظفرت به % % مجردة منه سنانا مفضضا % % PageV01P509 البحر : - 1(@)(@@) % خذا من العيشفالأعمار فانية % و الدهر منصرف و العيش منقرض % 2(@)(@@) % في حامل الكأس من شمس الضحى خلف ؛ % و في المدامة من بدر الدجى عوض % 3(@)(@@) % كأن نجم الثريا كف ذي كرم % مبسوطة للعطاياليس تنقبض % 4(@)(@@) % دارت علينا كؤوس الخمر مترعة % و للدجى عارض في الجو معترض % 5(@)(@@) % حتى رأيت نجوم الليل غائرة % كأنهن عيون حشوها رمض % PageV01P510 البحر : - 1(@)(@@) % ثنتني عنكفاستشعرت هجرا % خلال فيك لست لها براضي % % 2(@)(@@) % و أنك كلما استودعت سرا % أنم من النسيم على الرياض % PageV01P511 البحر : - 1(@)(@@) % ألا رب ليل بت أرعى نجومه % % فلم أغتمض فيهو لا الليل أغمضاحذف % % 2(@)(@@) % كأن الثريا راحة تشبر الدجى % % لتعلم طال الليل لي أم تعرضاحذف % % 3(@)(@@) % عجبت لليل بين شرق ومغرب % يقاس بشبر كيف يرجى له نقضاحذف % % PageV01P512 البحر : - 1(@)(@@) % و صفراء من ماء الكروم شربتها % % على وجه صفراء الغلائل غضةحذف % % 2(@)(@@) % تبدت و فضل الكأس يلمع فوقها % % كأترجة زينت بإكليل فضةحذف % % PageV01P513 البحر : - 1(@)(@@) % بين الشنوف الحمر والأقراط % أجياد فاترة الجفون عواطي % % 2(@)(@@) % وصلت بنا سكر الصبابة وانثنت % سكرى القدود نحائف الأوساط % 3(@)(@@) % و علت ثمار صدورها أجسادها % % فحرمن مس مجاسد ورباط % 4(@)(@@) % لم أرض سقيا الدمعو هو رضى لها % % فشرطت سقياها على 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms122# الأشراط % 5(@)(@@) % و لقد تسلفني الجوى و ترينه % % بسوالف الرشإ الأحم العاطي % % 6(@)(@@) % و حقاق عاج نقطت أطرافها % % بالمسك لم تنسب إلى خراط % 7(@)(@@) % و مرجل لا صبح في ظلماته % % إلا حلمة الأمشاط % 8(@)(@@) % صقلت سلاسله . . . وكسرت % بأنامل مثل اللجينسباط % 9(@)(@@) % أيام للقلب المفرط في الصبا % % ما شاء من فتك ومن إفراط % 10(@)(@@) % إذ للعواذل غفلتي وتكاسلي % % و إلى الغواية نهضتي و نشاطي % % PageV01P514 11(@)(@@) % أختال بين جآذر ومزاهر % و أرود بين دساكر و بواطي % % 12(@)(@@) % و الروض قد نشر الحيا أنماطه % % فكأنهن غرائب الأنماط % 13(@)(@@) % ما للزمان سطا على أشرافنا % % فتخرموا وعفا عن الأنباط % % 14(@)(@@) % أعداوة لذوي العلى أم همة % سقطت فمال بها إلى السقاط % 15(@)(@@) % خضعت رقاب بني العداوة إذ رأت % آسارها يتعد تحت سياطي % % 16(@)(@@) % حتى إذا نكصت على أعقابها % % دلف النبيط إلي من شمشاط % 17(@)(@@) % صدق المعلم أنه من أسرة % عرب يسوسهم بنو سنباط % 18(@)(@@) % آباؤك الأشراف إلا أنهم % % أشراف موش وشاطح وخلاط % 19(@)(@@) % نسب يبين عن سقوطك نشره % % كالثوب تنشره عن الأسفاط % 20(@)(@@) % ثكلتك دامية القرا مجلودة % نبذتك خائفة بغير قماط % PageV01P515 21(@)(@@) % عجلت فلم تحتط عليك من الردى شاهدتها حسناء يقرع بابها للخسر وفد زنا ووفد لواطولقطت يانعة الثمار فلم أجد لنمار دوحتها أوان لقاطثنوية تعطى الصديق قيادها وتفل غرب عدوه المتعاطى % % و رجت حياطة مسلم محتاطسقط أبيات ص % % 22(@)(@@) % جفت الخلوقفليس يعرف جسمها % % إلا خلوق مواقع الأسواط % 23(@)(@@) % قد كانت الدنيا عليك فسيحة % فاليوم أضحتو هي سم خياط % 24(@)(@@) % أسخطتنيو جناة عيشك حلوة % فجنيت مر العيش من إسخاطي % % 25(@)(@@) % و علمتإذ كلفت نفسك غايتي % % أن الرياح بعيدة الأشواط % 26(@)(@@) % أترومنيو على السماك محلتي % % شرفا و بين الفرقدين صراطي % % 27(@)(@@) % من بعد ما رفع الأكابر مجلسي % % فجلست بين مؤمر و سماط % 28(@)(@@) % و غدت صوارم منطقي مشهورة % بين العراق تهز والفسطاط % % 29(@)(@@) % و حططت منزلة العدو بمقول % كشبا الأسنة رافع حطاط % 30(@)(@@) % هيهات دون مناك حز مفاصل % و جراح أفئدة ونزع نياط % PageV01P516 31(@)(@@) % أغراك جهلك بالقريض ورثه % حتى انتحاك بمخلب عطاط % 32(@)(@@) % و قد امتحنت دعاويا لك بينت % عن بحر تمويه بعيد الشاطي % % 33(@)(@@) % فرأيت علمك من خرا وخراطة % و وجدت سعدك من فسا وضراط 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms123# % 34(@)(@@) % و غريبة أضحت لعرضك شامة % علما كما أعلمت ثوب قباطي % % 35(@)(@@) % تركتك نزر القسط من طيب الكرى % % و من الهموم موفر الأقساط % 36(@)(@@) % لفظ تراه عقاربا مبثوثة % و يراه غيرك جوهر الأسفاط % 37(@)(@@) % فاصبر لتقطيع القذال ومن أصن % عنه الحسام أدعه للمشراط % 38(@)(@@) % قل للغواة المسرعين بنصره % إسراع واردة القطا الفراط % 39(@)(@@) % سأعيد بسط القول في أعراضكم % % و الجور للسفهاء خير بساط % 40(@)(@@) % شاموا بوارق حينهمو استنبطوا % % ماء المنية أيما استنباط % PageV01P517 41(@)(@@) % حراث مزرعة وأحمق لحية % و معلم ينمى إلى خياط % 42(@)(@@) % لو حد منتهب القريض تجاوزوا % % في الحدأو قطعوا من الآباط % 43(@)(@@) % كفوافلست أعرض الحسب الذي % % لا خلط فيه لمعشر أخلاط % PageV01P518 البحر : - 1(@)(@@) % انظر إلى صورة مكملة % كأن منها المدام قد خلطا % % 2(@)(@@) % تبرية اللونفي محاسنها % % كعاشق من حبيبه قنطا % % 3(@)(@@) % كأنها كف حاسب عجلت % فهي من الخوف تحذر الغلطا % % PageV01P519 البحر : - 1(@)(@@) % و ركب أمموا قحطا % % نو الليل بهم يسطو % % 2(@)(@@) % فحطوا رحلهممنه % % بوادي الجدبإذ حطوا % % 3(@)(@@) % و أنى يفعل الخير % فتى نصف اسمه قحط % PageV01P520 البحر : - 1(@)(@@) % إلف الخيال أراك إلفا شاسعا % % وصل الهجوع وزار ركبا هاجعا % % 2(@)(@@) % أهلا بمبتسم تغيب آفلا % بدر التمامو قد تجلى طالعا % % 3(@)(@@) % لتلذ لي بين العقيق مضاجعي % % ما دام طيفك لي يهز مضاجعا % % 4(@)(@@) % أبت الركائب أن تعنو قد دعت % قلبا تأبى ثم أصحب طائعا % % 5(@)(@@) % بأوانس تدع الدموع أوانسا % و رواتع تدع القلوب رواتعا % % 6(@)(@@) % لم تنكشف عنها البراقع لوعة % إلا وألبسها الحياء براقعا % % 7(@)(@@) % كتمت سجوف الرقم ذائع حسنها % % و أعدن مكتوم الصبابة ذائعا % % 8(@)(@@) % فسفرن عن شيم الوداد بواذلا % من وصلنا ما كن قبل موانعا % % 9(@)(@@) % لو رمن تضييع العهود ونقضها % % لحفظن درا في المحاجر ضائعا % % 10(@)(@@) % يغتالنا البين المفرق شملنا % % و تبيحنا الأحلام شملا جامعا % % PageV01P521 11(@)(@@) % خلع السرور بعرصتيك عذاره % % ما افتاد فيك جوى الصبابة خالعا % % 12(@)(@@) % و سقت دموع الغيث ربعك ما سقت % منا لذكراك الدموع مدامعا % % 13(@)(@@) % غدت الوفود بنظم حمد شائع % لما رأت كرما وفضلا شائعا % % 14(@)(@@) % و ثنى الرجاء إلى ابن فهد عطفه % % فغدا على ربع المكارم رابعا % % 15(@)(@@) % ملك يمد إلى العفاة أناملا % كادت تكون من السماح ينابعا % % 16(@)(@@) % أوفى فأشرق بين نشر ساطع % قمر 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms124# يعيد الليل فجرا ساطعا % % 17(@)(@@) % متتابع المعروف ينبع في الندى % % و البأس أدواء له وتبايعا % % 18(@)(@@) % فإذا رآك البشر برقا لامعا % منهأراك الجود غيثا هامعا % % 19(@)(@@) % تنتابه نوب الخطوبفتنثني % % عنهو هل تثني الخطوب متالعا % % 20(@)(@@) % حلم يرد البأس فيه كأنه % % غمد حوى عضب المهزة قاطعا % % PageV01P522 21(@)(@@) % لما استعنت على الزمان بجوده % % أعطى المنى قسرا و كان ممانعا % % 22(@)(@@) % كم معرك عرك القنا أبطاله % % فسقاهم في النقع سما ناقعا % % 23(@)(@@) % هبت رياحك في ذراه سمائما % و غدت سماؤك تستهل فجائعا % % 24(@)(@@) % فتركت من حر الحديد مصائفا % فيهو من فيض الدماء مراتعا % % 25(@)(@@) % و غدوت من حب الوقائع باسطا % يمناك توقع في التليد وقائعا % % 26(@)(@@) % شغلتك عن حسن السماع مدائح % حسنت فما تنفك تطرب سامعا % % 27(@)(@@) % طلعت عليكأبا الفوارس أنجم % منهنيخجلن النجوم طوالعا % % 28(@)(@@) % زهر إذا صافحن سمع معاند % خفض الكلامو غض طرفا خاشعا % % 29(@)(@@) % جاءتك مثل بدائع الوشي الذي % % ما زال في صنعاء يتعب صانعا % % 30(@)(@@) % أو كالربيع يريك أخضر يانعا % و موردا شرقا و أصفر فاقعا % % PageV01P523 البحر : - 1(@)(@@) % أ إن دنا الشوق بعد ما شسعا % % و أسعد الدمع بعد ما امتنعا % % 2(@)(@@) % وصلت ماء الشؤون من كمد % يقطع القلب حره قطعا % % 3(@)(@@) % أبارق بالغدير أذكرني % % لمع السنايا العذابإذ لمعا % % 4(@)(@@) % أم عارض لا يزال معترضا % يصدع أحشاي كلما انصدعا % % 5(@)(@@) % سقيا لسلع و إن سقيت به الص % صباغداة الوداعو السلعا % % 6(@)(@@) % ودعتهمو الأسى يجرعني % % بالأجرع الفرد كأسه جرعا % % 7(@)(@@) % و من وراء السجوف بدر دجى % يخجل بدر الدجى إذا طلعا % % 8(@)(@@) % أولع جفنيه بي ليقتلني % % سهماهماواقعا و منتزعا % % 9(@)(@@) % لا تولعا بالمشوق لومكما % % و إن تمادى غرامه ولعا % % 10(@)(@@) % ولى وردع العبير يمنحه % % رياه طيب العناق لارتدعا % % PageV01P524 11(@)(@@) % كم عزمة كالشهاب عدت بها % % محت مغيم الهمومفانقشعا % % 12(@)(@@) % و كم وصلت الوجيف منتجعا % جدوى ابن فهد فرحت منتجعا % % 13(@)(@@) % في غدا رافعا لأسرته % راية مجد يزيدها رفعا % % 14(@)(@@) % يريك فعلا في البشر مبتدعا % منهو معنى في الجود مخترعا % % 15(@)(@@) % ما زال يعلو ربا الفخارو يح % % تل يفاع العلاء مذ يفعا % % 16(@)(@@) % وقتك من عثرة الردى عصب % إن عثروا قلت بالسماحلعا % % 17(@)(@@) % عيد معاد عليك ممتعه % % ما لاح ضوء النهارأو متعا % % 18(@)(@@) % و منزل 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms125# إن جفاه نازله % % حن اشتياقا إليهأو نزعا % % 19(@)(@@) % رقيق ثوب الهواء تدفعه % % أمواج بحر يموج مندفعا % % 20(@)(@@) % جانبه القر والهجيرفقد % % طاب مصيفا و طاب مرتبعا % % PageV01P525 21(@)(@@) % و صافحت ماءه الصبافغدا % % منخفضا تارةو مرتفعا % % 22(@)(@@) % و اتجهت فيه كل كاشفة % وجها بثوب الظلام مدرعا % % 23(@)(@@) % تحمل في السير إخوةفإذا % % حان مدى السير أصبحوا شيعا % % 24(@)(@@) % فنازلات تهوي على عجل % تهاوي الطير أشعرت جزعا % % 25(@)(@@) % و صاعدات تسير في مهل % كالخيل أبقى بها السرى ظلعا % % 26(@)(@@) % يقودها كل قائد تعب % كأنه راكع و ما ركعا % % 27(@)(@@) % فكل حسن تراه مفترقا % فيهإذا جئته ومبتدعا % % 28(@)(@@) % بدائع لا يزال مبدعها % % يظهر لي من صنيعه بدعا % % 29(@)(@@) % تمل أيامك التي حسنت % فهي تضاهي الأعياد والجمعا % % 30(@)(@@) % و خلعة من ثناي دبجها ال % % فكر ففاقت بحسنها الخلعا % % PageV01P526 31(@)(@@) % و قرب الحذق لفظهافغدا % % من قربه مطمعا وممتنعا % % PageV01P527 البحر : - 1(@)(@@) % تروع هجرها قلبا مروعا % % صديع الشيب يملؤه صدوعا % % 2(@)(@@) % أرتها الأربعون هشيم روض % و قبل الأربعين رأت ربيعا % % 3(@)(@@) % هزيع شبيبة طلعت عليه % % كواكبهفرصعت الهزيعا % % 4(@)(@@) % ألافاعجب لما صنع الغواني % % فقد أفسدن بالغدر الصنيعا % % 5(@)(@@) % كفرن بذلك الصنم المفدى % % و كن له سجودا أو ركوعا % % 6(@)(@@) % يرين بعاده قرب الأماني % % و ضيق عناقه العيش الوسيعا % % 7(@)(@@) % ليالي يخجل الريحان ريحا % إذا اتشحته غانية ضجيعا % % 8(@)(@@) % أ أبناء الطريق دعوا طريقا % سبقت ذوي السباق به جميعا % % 9(@)(@@) % فلست مجاورا إلا جوادا ؛ % و لست مقارعا إلا قريعا % % 10(@)(@@) % أنام على قوارصكم وعندي % % قوارص تسلب المقل الهجوعا % % PageV01P528 11(@)(@@) % أهز بها على قوم سيوفا % و أجعلها على قوم دروعا % % 12(@)(@@) % إذا سارت مشنعة عليكم % % فردوا ذلك الخبر الشنيعا % % 13(@)(@@) % أزفان المحرم إن شعري % % بحر الشعر أحرى أن يشيعا % % 14(@)(@@) % تركت الدف تنقره اكتسابا % و ملت علي تنقرني ولوعا % % 15(@)(@@) % إذا الشيخ الخليع هفا اغترارا % تيمم بالأذى الصل الخليعا % % 16(@)(@@) % سيذهل عن فنون الرقص هما % إذا رقصت منه حشا مروعا % % 17(@)(@@) % و يفصح نابه سجحات نابي % % إذا استودعن سر فتى أذيعا % % 18(@)(@@) % لقد خلعت بتوبتك الملاهي % % ثياب الكبرو اكتست الخشوعا % % 19(@)(@@) % تركت بها المعازف ضائعات % و عز على المعازف أن تضيعا % % 20(@)(@@) % فقد نتفت لحاك بهاو لاقت % % صنوجكبعدهاخطبا فظيعا % % PageV01P529 21(@)(@@) % و كيف نسكت بعد مقال قوم % إذا 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms126# نسك المخنث مات جوعا % % 22(@)(@@) % و كنتإذا الزقاق رأتك تشدو % % بألحان الغريض بكت نجيعا % % 23(@)(@@) % أما تشتاق من عرصات غمى % % مغاني الجاشرية والربوعا % % 24(@)(@@) % فقد نبشت شآبيب الغوادي % % عليهن النمارق والقطوعا % % 25(@)(@@) % هجرت الهجر إلا نظم شعر % بهرت بسحره السحر البديعا % % 26(@)(@@) % و عفت العارإلا عير أنس % تخر لهإذا أدلى صريعا % % 27(@)(@@) % يزورك والدجى ستر عليه % % فيرقع منك مأبونا رقيعا % % 28(@)(@@) % أ فارسهل تكون غدا شفيعي % % إذا أنا فيك عاديت الشفيعا % % 29(@)(@@) % دعوت إلى الضلال دعاء غاف % % فلم يكن السميع له سميعا % % 30(@)(@@) % أ أرغب عن وداد أبي تراب % و قد شحن الترائب والضلوعا % % PageV01P530 31(@)(@@) % و أعرض بعد وخط الشيب عنه % % و قد أحببته طفلا رضيعا % % 32(@)(@@) % أقلوا قبل غشيان القوافي % % بذكركم المحافل والجموعا % % 33(@)(@@) % نصحت لكمفلا تردوا المنايا % % و لا تستمطروا السم النقيعا % % 34(@)(@@) % إذا لم تتبعوا أبدا رشادي % % فلست لغيكم أبدا تبيعا % % 35(@)(@@) % ألا متجرد لله ندب % يقرب منكم الحين الشنيعا % % 36(@)(@@) % فيخضب من دمائكم العوالي % % و ينقع من صديدكم الجزوعا % % 37(@)(@@) % أحاكمكم إلى السبع المثاني % % و تلك الشمس أغشتكم طلوعا % % 38(@)(@@) % فقد حفظت صحائفهن حقا % و لست لما احتفظن به مضيعا % % PageV01P531 البحر : - 1(@)(@@) % يا من لديه العفاف والورع % و شيمتاه العلاء والرفع % 2(@)(@@) % كأسك قد فرقت مفاصله % % بين الندامى فليس تجتمع % 3(@)(@@) % كأنما الشمس بينهم سقطت % فجسمها في أكفهم قطع % 4(@)(@@) % لو لم أكن واثقا بمشبهه % % منكلكاد الفؤاد ينصدع % 5(@)(@@) % فجد به بدعةفعندي من % % جودك أشياء كلها بدع % PageV01P532 البحر : - 1(@)(@@) % أ تكتم أسرار الهوى أم تذيعها % % و تحفظها بعد النوى أم تضيعها % % 2(@)(@@) % مهاة و لكن للفراق لقاؤها ؛ % و شمس و لكن للغروب طلوعها % % 3(@)(@@) % تعن لنا في مشرقات وجوهها % % إذا هي عنت مظلمات فروعها % % 4(@)(@@) % تصانع عن أجيادها بأكفها % % فيحسن عند المستهام صنيعها % % 5(@)(@@) % و لما تبادلنا العناقو أعنقت % دموعي ممزوجا بهن دموعها % % 6(@)(@@) % شكوت الذي تشكو إليكأنما % % تجن ضلوعي ما تجن ضلوعها % % 7(@)(@@) % سلام على الأيام تبيض بينها % % صنائعمسود العذار شفيعها % % 8(@)(@@) % تلفت بعد الأربعينو أسرعت % % عجالا فلم يربع علي ربيعها % % 9(@)(@@) % و تاجرة بالخمر تؤثر صونها % % عن البيعأو تلقى الغنى فتبيعها % % 10(@)(@@) % تسيل فم الزق الرويكأنه % % جراحة زنجي يسيل نجيعها % % PageV01P533 11(@)(@@) % إذا زارها وفد الرضاع تبرعت % بعذراء 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms127# لا يهوى الفطام رضيعها % % 12(@)(@@) % فلا طيب إلا أن يفوح نسيمها ؛ % و لا فجر إلا أن يلوح صديعها % % 13(@)(@@) % أقمنا لديها في رياض أنيقة % نمارقها موشية و قطوعها % % 14(@)(@@) % نروع بأسياف المدام همومنا % % كأنا بأسياف الوزير نروعها % % 15(@)(@@) % هو المزنة الغراء طبق صوبها % % إذا المزنة الغراء غب لموعها % % 16(@)(@@) % طلوب لغايات الكراملحوقها % % ركوب لأعلام النجاد طلوعها % % 17(@)(@@) % إذا متعت أخلاقه الغر خيلت % لعينيك أن الشمس راج متوعها % % 18(@)(@@) % و أزهر ينقاد الزمان لأمره % و تأمره زهر العلى فيطيعها % % 19(@)(@@) % وقور السجايا في النديركينها % % شرود العطايا في المحولخليعها % % 20(@)(@@) % إذا سجدت في الطرس أقلامه اغتدى % % سجود العدا حمالهو ركوعها % % PageV01P534 21(@)(@@) % تروعها أسيافهفتشيمها % % بدامية الأجفان نزر هجوعها % % 22(@)(@@) % و كيف على هز السيوف بقاؤها % % إذا كان مهتز اليراع يروعها % % 23(@)(@@) % أيا سائلي عن شيمة الحسن استمع % محاسن من نظم الثناء أذيعها % % 24(@)(@@) % إذا عد من آل المهلب أسرة % معاقلها أسيافها ودروعها % % 25(@)(@@) % رأيت العلا منثالة من شعابها % % عليهو مجموعا إليه جميعها % % 26(@)(@@) % همام وقى الأعداء من سطواته % تباعدها من سخطهفتروعها % % 27(@)(@@) % فعدته أسيافه ورماحه % و عدتها إذعانها وخضوعها % % 28(@)(@@) % أعل صدور السمرو هو حبيبها % % وحل شفار البيضو هو ضجيعها % % 29(@)(@@) % و قد علمت أمواله حين سامها % % حفاظ المعالي أنه سيضيعها % % 30(@)(@@) % و معركة يسود للنقع أفقها % % و تحمر من فيض الدماء ربوعها % % PageV01P535 31(@)(@@) % إذا ازدحمت فيها السيوف حسبتها % % ينابيع ماء ضاق عنها وسيعها % % 32(@)(@@) % قسمت حميا الموت بين حماتها % % فراح سواء جلدها وجزوعها % % 33(@)(@@) % و كم خطة حاولتهافاستطعتها % % بسيفكو الأيام لا تستطيعها % % 34(@)(@@) % إليك أطرنا من ديار ربيعة % نعائم في أرض العراق وقوعها % % 35(@)(@@) % ركايب تحدوها الشمالكأنها % % قلاع إذا أوفت عليها قلوعها % % 36(@)(@@) % تمادى بها السير الحثيثفلم تجل % لبعد المدى أغراضها ونسوعها % % 37(@)(@@) % يزيد سواد الليل صبغ سوادها % % و لا يتجلى في الصباح هزيعها % % 38(@)(@@) % فيذهب منها في سريع ذهابها % % و يرجع منها في بطيء رجوعها % % 39(@)(@@) % تمد على الأمواج باعا كأنه % % يعانقها في مده ويبوعها % % 40(@)(@@) % أشيع عطاياكالتي لو سترتها % % لقام الغنى عني خطيبا يشيعها % % PageV01P536 41(@)(@@) % و أصدع بالحسنى التي طار ذكرها % % و أكباد قوم تستطير صدوعها % % 42(@)(@@) % لقد أولعت منك المكارم بامرىء % حبيب إليه إلفها وولوعها % % 43(@)(@@) % فموردها عذب المياه نميرها % % و 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms128# مربعها سهل الرياض مريعها % % 44(@)(@@) % قواف إذا كانت دروع معاشر % فأنتم حلى أجيادها ودروعها % % 45(@)(@@) % تراءت منيعات فلما دعوتها % % لمجدكم أعطى القياد منيعها % % 46(@)(@@) % و ما زال ريحان المديح وصبحه % % يضيء قلوبا منكم ويضوعها % % PageV01P537 البحر : - 1(@)(@@) % أمن رقبة عاف السلام مودعا % % و رد جموح الدمع حين تسرعا % % 2(@)(@@) % و صد عن البيض الحسانو قد بدت % % فأبدت لعينيه المحاسن أجمعا % % 3(@)(@@) % برزنفمن بدر تقنع بالدجى % % يغازل ليثا بالحديد مقنعا % % 4(@)(@@) % و من غصن رطب تأزر بالنقا % % إذا هز عطفيه القناع تزعزعا % % 5(@)(@@) % مزجن له عذب الهوى بمرارة % يجرع من مكروهها ما تجرعا % % 6(@)(@@) % إذا ما الهوى يوما تصدع شمله % % فأخلق بشمل الصبر أن يتصدعا % % 7(@)(@@) % عدتني من زور إذا زار عاشقا % أعاد المنى مرأىو قد كان مسمعا % % 8(@)(@@) % يداري عذوبة الحليو قد علا % % ترنمهو المسك حين تضوعا % % 9(@)(@@) % و يبذل لي في النوم ما لو طلبته % % على يقظة مني ومنه تمنعا % % 10(@)(@@) % هل الدهر ملق من مخالب % % شجاعا على ألا مشيعا % % PageV01P538 11(@)(@@) % صبورا على الأحداث يعشق عدمه % % و إقلالهكيلا يذل ويخضعا % % 12(@)(@@) % و مرتدع رامي البريء بتهمة % فقد سار فيها في الأنام وأوضعا % % 13(@)(@@) % أ رب القوافي الغر يرقى بمثلها % % لقد فر أفعى ينفث السم منقعا % % 14(@)(@@) % و كيفو قد شعشعت كل غريبة % من القول تزري بالرحيق مشعشعا % % 15(@)(@@) % و أجريت من عذب الكلام مواردا % تروح وتغدو للبرية مشرعا % % 16(@)(@@) % و برزت سبقا في غرائبه إلى % % يقصر عنها سابق القوم إن سعى % % 17(@)(@@) % فهل سامع مني الأمير براءة % أقوم بها بين السماطين مسمعا % % 18(@)(@@) % ثناءإذا عاينت عقد نظامه % % توهمته للجوهر التبر مجمعا % % 19(@)(@@) % فتى ساور العلياء قبل فطامه % % و راع العدا من قبل أن يترعرعا % % 20(@)(@@) % جواد إذا أدى الفريضة جوده % % تنفل من حب الندى فتطوعا % % PageV01P539 21(@)(@@) % نقابل منه الشمس في قرب ضوئها % % و إن بعدت في صفحة الجو مطلعا % % 22(@)(@@) % و نسأل منه بارعا في سماحة % فإن نحن أغفلنا السؤال تبرعا % % 23(@)(@@) % إذا أبدع المداح أبدع عرفه % % فكان بما يسدي من العرف أبدعا % % 24(@)(@@) % و إن لج في إضراره الدهر أصبحت % خلائقه فيها أضر وأنفعا % % 25(@)(@@) % مكارم وضاح إذا ما تذرعت % ملوك الورى في المكرمات تذرعا % % 26(@)(@@) % له راحة 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms129# ما قيس بالغيث صوبها % % لدى المحلإلا كان أندى وأوسعا % % 27(@)(@@) % ترى طمع العافين يحتاج وفره % % و ليست ترى أعداؤه فيه مطمعا % % 28(@)(@@) % صنائع مشهور الصنائع يبتدي % % طباعا إذا المسؤول يوما تصنعا % % 29(@)(@@) % إذا ما مضى صدر النهار بسيله % % تولى و أبقى آخر الليلمربعا % % 30(@)(@@) % شمائل أبهى من حلى الروض منظرا % و أحسن من فعل السحائب مرتعا % % PageV01P540 31(@)(@@) % أبا تغلب لازلت للقرن غالبا % إذا ارتد للروع الكمي مروعا % % 32(@)(@@) % تنازله بالسيف غير مخادع % فتورده منه وريدا وأخدعا % % 33(@)(@@) % أعد دارسا من رسم برك واضحا % فقد وضح العذر انكشافا وأقنعا % % 34(@)(@@) % فلي فيك من حسن الثناء ذريعة % تمكن عندي للصنيعة موضعا % % 35(@)(@@) % و ثانية إن ابن عمك شافعي % % و لو ناشد الغيث استهلفأسرعا % % PageV01P541 البحر : - 1(@)(@@) % أبا جعفر لم تنسى الصنيعا % % و قد كنت تحسن في الصنيعا % % 2(@)(@@) % أراك تناسيت عهدي القديم % فضاعو ما حقه أن يضيعا % % 3(@)(@@) % فلا نازح الود يدني الدنو % و لا غائب الشر ينوي الرجوعا % % 4(@)(@@) % فلولا الحياء أراك العتاب % بديعا من النظم يتلو بديعا % % 5(@)(@@) % ملوم و يخضع بعد الملام % فيلذع لوما و يأسو خضوعا % % PageV01P542 البحر : - 1(@)(@@) % و لقد مررت على المحدث مرة % و إذا بحضرته ظباء رتع % 2(@)(@@) % و إذا ظباء الأنس تكتب كل ما % % يمليو تثبت ما يقول وتسمع % 3(@)(@@) % يتجاذبون الحبر من ملمومة % بيضاءتحملها علائق أربع % 4(@)(@@) % من خالص البلور غبر لونه % % فكأنه سبج يلوح ويلمع % 5(@)(@@) % إن نكسوها لم تسلفمليكها % % فيما حوته عاجلا لا يطمع % 6(@)(@@) % و متى أمالوها لرشف رضابها % % أداه فوهاو هي لا تتمنع % 7(@)(@@) % فكأنه قلبي يضن بسره % أبدا و يكتم كل ما يستودع % 8(@)(@@) % رجلاه رأس عندهالكنه % % يلفى وبرء حفاه ساعة يقطع % 9(@)(@@) % و كأنهو الحبر يخضب رأسه % % شيخ لوصل خريدة يتصنع % 10(@)(@@) % لم لا ألاحظه بعين جلالة % و به إلى الله الصحائف ترفع % PageV01P543 البحر : - 1(@)(@@) % و أدهم يسفر عن ضده % كما سفر الليلإذ ودعا % % 2(@)(@@) % بعثت إليك به أخرسا % يناجي العيون بما استودعا % % 3(@)(@@) % صموت إذا زر جلبابه % أريتفإن حله أمتعا % % 4(@)(@@) % محبر أنواره جامع % يروح ويغدو لها مجمعا % % 5(@)(@@) % و روضته غيث أقلامه % و قد كان من قبله بلقعا % % 6(@)(@@) % تلاقي النفوس سرورا به % % و تلقى الهموم به 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms130# مصرعا % % 7(@)(@@) % فلا تعدلن به نزهة % فقد حاز ما يبتغي أجمعا % % PageV01P544 البحر : - 1(@)(@@) % عذلتو هل عذل المتيم نافعه % % و أسمعت لو أصغى إلى اللوم سامعه % % 2(@)(@@) % تعرقه الصبر الجميلو في الحشا % % رسيس هوى تنهل عنه مدامعه % % 3(@)(@@) % و هل لمحب طاوع الشوق دمعه % % على بعد من يهواهصبر يطاوعه % % 4(@)(@@) % وقفنا نذود الدمعو الدمع سابح % و عجنا نحيي الربعو الشوق رابعه % % 5(@)(@@) % فألبسني جزعاه حلة جازع % و جرعني ماء الغرام أجارعه % % 6(@)(@@) % أعاتب طرفي أن يفيض دموعه % % و إن جر قلبي أن تذاع ودائعه % % 7(@)(@@) % و لست أضيع الحزم في فيض عبرة % لفقد شباب ليس يوجد ضائعه % % 8(@)(@@) % و كم في عدي من كهول وفتية % كرام لهم كهل السماح ويافعه % % 9(@)(@@) % جزيناهم حمدا لحسن صنيعهم % % و كل امرىء يجزى بما هو صانعه % % 10(@)(@@) % إذا المجد أمسى في الملوك مفرقا % ففي تغلب يمسي ويصبح جامعه % % PageV01P545 11(@)(@@) % و إن كان عبد الله شاد لها العلا % % فإن عليا في الذي شادتابعه % % 12(@)(@@) % فتى شرع المجد المؤثلفالعلا % % مآربهو المكرمات شرائعه % % 13(@)(@@) % فلا جود إلا ما تفيد يمينه ؛ % و لا مجد إلا ما تشيد وقائعه % % 14(@)(@@) % إذا وعد السراء أنجز وعده % % و إن أوعد الضراءفالعفو مانعه % % 15(@)(@@) % يحن إلى ورد المنية حاسر % % إذا حان عن ورد المنية دارعه % % 16(@)(@@) % هو الدهر يجري في البرية بأسه % % ببؤسى و تجري بالسعود صنائعه % % 17(@)(@@) % رمى الله أرض الروم منه بقاسم % يروع العدا قبل الكريهة رائعه % % 18(@)(@@) % يعود إلى الرمح الرديني ماؤه % % و يورق إن ضمت عليه أصابعه % % 19(@)(@@) % و لما تراءى للعدو مصمما % تراءت له تحت العجاج مصارعه % % 20(@)(@@) % فآب سليب الغمض تحسب أنه % % من الرعب صب قد أقضت مضاجعه % % PageV01P546 21(@)(@@) % و إن عفت الأقدار عنهفقد عفت % مصايفه منهو أقوت مرابعه % % 22(@)(@@) % ليهن الأمير التغلبي قدومه % % و فتح توالت بالسعود طوالعه % % 23(@)(@@) % نشرت له في كل شرق ومغرب % ثناء تروي السامعين بدائعه % % 24(@)(@@) % فأي لبيب ليس يبسم قلبه % % سرورا إذا أصغت إليه مسامعه % % 25(@)(@@) % ملكت زمام الدهر في كل حالة % فليس يضر الدهر من أنت نافعه % % 26(@)(@@) % و أومض لي من جود كفك لامع % و ما الغيث إلا حيث يومض لامعه % % 27(@)(@@) % فأغنيتني بالجود عن كل ممسك 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms131# % أكافحه عن جوده وأقارعه % % PageV01P547 البحر : - 1(@)(@@) % و مبنية من خيزران مفضض % يقدمها خشف من الإنس أروع % 2(@)(@@) % لها قبة كالحيتين صبيلة % و وجه بتجذيف الشوانين يلمع % 3(@)(@@) % عجاجتها دكناء في كل مجلس % و ياقوتها الجمر الذي يتضوع % 4(@)(@@) % إذا استودعت سرا أذاعت بسرها % % تشتت أنفاسا بها العيش يجمع % PageV01P548 البحر : - 1(@)(@@) % و لما اصطبحناو الخمار يصدنا % % عن الكأس عجناو الغلائل تنزع % 2(@)(@@) % إلى وسع حمام كأن سماءه % عقيق بجامات اللجين مرصع % 3(@)(@@) % و في الصدر قينات وشرب مدامة % يلذ بها مرأى وما ثم مسمع % 4(@)(@@) % على سبج من أرضهو جيوشه % % قيام على أرجائهاو هي خشع % 5(@)(@@) % قضينا به عند الصباح لبانة % و عجنا إليها والعواتق هجع % PageV01P549 البحر : - 1(@)(@@) % له قلم تجري النجوم بجريه % % يطيع له حتم القضاء ويسمع % 2(@)(@@) % يدير سعودا أو نحوسا و إنه % % من الفلك الدوار في الجو أسرع % 3(@)(@@) % إذا ما امتطى منه ثلاث أنامل % بدا ساجدا من تحتهاو هي ركع % PageV01P550 البحر : - 1(@)(@@) % أيها السيد الذي راحتاه % مزنة ما لصوبها إقلاع % 2(@)(@@) % عجب الناس كيف ضعتو مثلي % % بفناء الأمير ليس يضاع % 3(@)(@@) % قلتإذ أعوز الشفيع وأعيا الأ % % ذن فيما أروم والاستماع % 4(@)(@@) % هذه جنة الخلودو ما لي % % من حميم و لا شفيع يطاع % PageV01P551 البحر : - 1(@)(@@) % بنفسي من رد التحية ضاحكا % فجدد فيه بعد يأسي مطمعي % % 2(@)(@@) % إذا ما بدا أبدى الغرام سرائري % % و أظهر للعذال ما بين أضلعي % % 3(@)(@@) % و حالت دموع العين بيني وبينه % % كأن دموع العين تعشقه معي % % PageV01P552 البحر : - 1(@)(@@) % أهلا به من عارض ترك الدجى % % ببياض مزنته غرابا أبقعاحذف % % 2(@)(@@) % نثرت يد الأرياح لؤلؤ ثلجه % % فبدا بأجياد الغصون مرصعاحذف % % 3(@)(@@) % و كأنما عبثت لوامع برقه % % بسحابهفرمت به فتقطعاحذف % % PageV01P553 البحر : - 1(@)(@@) % أقارع أعداء النبي و آله % قراعا يفل البيض عند قراعهحذف % % 2(@)(@@) % و أعلم كل العلم أن وليهم % سيجزى غداة البعث صاعا بصاعهحذف % % 3(@)(@@) % فلازال من والاهم في علوه % ولازال من عاداهم في اتضاعهحذف % % 4(@)(@@) % و معتزلي رام عزل ولايتي % % عن الشرف العالي بهم وارتفاعهحذف % % 5(@)(@@) % فما طاوعتني النفس في أن أطيعه % ولا آذن القرآن لي في اتباعهحذف % % 6(@)(@@) % طبعت على حب الوصي و لم يكن % لينقل مطبوع الهوى عن طباعهحذف % % PageV01P554 البحر : - 1(@)(@@) % و محجوبة 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms132# بالماء عن كل ناظر % و لكنها من حجبها تتخطف % 2(@)(@@) % أخذنا عليهن السبيل بأعين % رواصدإلا أنها ليس تطرف % 3(@)(@@) % فجاءت به شتى النجارو لم تزل % تجمع من أشتاتها وتؤلف % 4(@)(@@) % تصافحها بيض المتون كأنها % % خناجر في أيماننا تتعطف % PageV01P555 البحر : - 1(@)(@@) % عندي ضيف لم يزل مضيفا % % مقدما في مجده شريفا % % 2(@)(@@) % زار ليحيا نعمة وريفا % % و الصبح قد قابلنا منيفا % % 3(@)(@@) % و رفعت ظلماؤه السجوفا % % و الكأس قد سارت بنا الوجيفا % % 4(@)(@@) % حتى توارت شمسها كسوفا % % فأهد لي خلوقها المدوفا % % 5(@)(@@) % مدرعا بلوره المشوفا % % مثل العروس ادرعت شفوفا % % 6(@)(@@) % تحوي من السكر به صنوفا % % و كبر الظرف تكن ظريفا % % 7(@)(@@) % و الطففمازلت بنا لطيفا % % في سابح تحسبه معلوفا % % 8(@)(@@) % كان لقعر لجة حليفا % % لاقى و قد فارقهالحتوفا % % 9(@)(@@) % خطفة صياد غدا مخطوفا % % و من يكن يعرفه معروفا % % 10(@)(@@) % صب إلى السكر به مشغوفا % % ترى الذي حاولته خفيفا % % PageV01P556 البحر : - 1(@)(@@) % تزداد منعا إذا ما رمت إسعافا % % و تعلن الظلمإن حاولت إنصافا % % 2(@)(@@) % غصن يحملني عبء الهوى فمتى % % ضعفت عنه حبتني منه أضعافا % % 3(@)(@@) % ماذا عليهاو قد خفت ركائبها % % لو كان يأمن منها الصب ما خافا % % 4(@)(@@) % بل ما على السربإذ فاجاكلو عطفت % ظباؤه لك أجيادا وأعطافا % % 5(@)(@@) % أقبلن يكسرن أجفانا مفترة % إلى الصبابةأو يمددن أطرافا % % 6(@)(@@) % تثنى مثقلة منها مخففة % كأنما قسمت قضبا وأخفافا % % 7(@)(@@) % و ربما عن ديباج الخدود لنا % % و قد كساه وشيك البين أفوافا % % 8(@)(@@) % و أومضت من خلال السجف بارقة % أطاعها مطر الأجفان تذرافا % % 9(@)(@@) % أيام يحسد عطفيه الحسامإذا % % ما هزهو ثنى عطفيه إرهافا % % 10(@)(@@) % حيا الكثيب ونادى الشوق من كثب % فلم يطق لغروب الدمع إيقافا % % PageV01P557 11(@)(@@) % و ما خفا البرق إلا عاد يذكره % % من الثنية أجزاعا وأخيافا % % 12(@)(@@) % ألية بالكرى المجفو تبعده % % عنا الركائب إرفالا وإيجافا % % 13(@)(@@) % لقد أبحت شريف القول ذا حسب % في الأزد موف على العلياء إشرافا % % 14(@)(@@) % إلى ابن فهد زففنا كل آنسة % عذراءتتحفه بالحمد إتحافا % % 15(@)(@@) % جاءته لا تتقاضى عنده عدة ؛ % أنى و قد أخذت جدواه أسلافا % % 16(@)(@@) % ألفن منه فناء ما حللن به % % إلا وجدن جنان العيش ألفافا % % 17(@)(@@) % أغر يكشف عنا كل نائبة % كالصبح مازال للظلماء كشافا % % 18(@)(@@) % يجري إلى الجوديوم الجود 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms133# مبتسما % إذا البخيل غدا للبخل وقافا % % 19(@)(@@) % سام إذا القوم راموا نيل سؤدده % علا سموا فحط القوم إسفافا % % 20(@)(@@) % إن خالفوا المجد لم يعدل مخالفة % أو أخلفوا الوعد لم يتبعه إخلافا % % PageV01P558 21(@)(@@) % دعا السماح سقيفا منه حين دعا % % من الملوك أخلاء وأحلافا % % 22(@)(@@) % نزور منه وساع الجود نوسعه % % حمدا و يوسعنا برا وألطافا % % 23(@)(@@) % يفل عنا سهام الخطب مقتدرا % حتى يعيد سهام الخطب أهدافا % % 24(@)(@@) % من ذا يفاخره إن عدمفتخرا % من سر يعرب أمجادا وأشرافا % % 25(@)(@@) % علا تطيب برياها مدائحنا % % كالمسك تأخذ منه الريح أعرافا % % 26(@)(@@) % و شيمة إن رأينا الجود مقتصدا % فيمن سواهأرتنا الجود إسرافا % % 27(@)(@@) % و عزمة لا تزالالدهرنجدته % % تهز منها على الأعداء أسيافا % % 28(@)(@@) % إن وفر السيف يوم الروعتالده % % أعاد توفيره بالبذل إتلافا % % 29(@)(@@) % بينا تراه عطوفا في مكارمه % % حتى تراه على الأقران عطافا % % 30(@)(@@) % يمشي بضوء الظبا في كل معترك % مدت عليه سجوف النقع أسدافا % % PageV01P559 31(@)(@@) % أبا الفوارسلازالت مدائحنا % % تعتدنا لك زوارا وأضيافا % % 32(@)(@@) % ما فوق الدهر لي سهما جزعت له % % إلا وجدتك لي درعا وتجفافا % % 33(@)(@@) % جاءتك معنى وألفاظا مدبجة % كأنها درر شققن أصدافا % % 34(@)(@@) % وافت تهنيك بالأجر الجزيل على % % شهر الصيامو بالعيد الذي وافى % % PageV01P560 البحر : - 1(@)(@@) % لنا روضة في الدار صيغ لزهرها % % قلائد من حلي الندى وشنوف % 2(@)(@@) % يطيف بنا منهاإذا ما تنفست % نسيم كعقل الخالدي ضعيف % 3(@)(@@) % و ندمان صدق نثره ونظامه % % ربيع إذا فاوضتهو خريف % 4(@)(@@) % و ماء حكى أشعار حمد ببرده % % و لكنه محيا و تلك حتوف % 5(@)(@@) % و قد رق ثوب الغيمحتى كأنما % % تنشر دون الأفق منه سجوف % 6(@)(@@) % فزر مجلسا قد فضل الله أهله % % و شرفهمإن الأديب شريف % 7(@)(@@) % و لا تعد أفعال الشريففإنه % % دمان رقيق الحلتين ظريف % PageV01P561 البحر : - 1(@)(@@) % هذي المعارف منهم فتعرفا % % وقفا لعل الركب أن يتوقفا % % 2(@)(@@) % إن تجفها ريم السحاب فما جفا % % أطلالها دمع يرقرقه الجفا % % 3(@)(@@) % و لئن شكت حيف الزمان لقد مشى % % بالبين في حافاتها متحيفا % % 4(@)(@@) % عقلت ركاب سرورنا في ظلها % % و لكم سرى فيه السرورفأوجفا % % 5(@)(@@) % أيامإن وعد الحبيب متيما % وصلا وفى و إذا توعد أخلفا % % 6(@)(@@) % و مهفهف كالشمس سالم نوره % % ظلم الدجى أو كالقضيب تعطفا % % 7(@)(@@) % يهدي لعاشقه الحتوففإن 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms134# بدا % % أنسته سالفتاه ما قد أسلفا % % 8(@)(@@) % و كأنما أبدى لنا بمدامه % % و جماله صاع العزيز ويوسفا % % 9(@)(@@) % فعلام تقرفني الوشاةو إنما % % نازعته صهباء كرم قرقفا % % 10(@)(@@) % و الليل قد ضعفت قوى ظلمائه % % فالنجم فيه يدير لحظا مدنفا % % PageV01P562 11(@)(@@) % حتى تكشف صبحهفحسبته % % لضيائهخلق الأمير تكشفا % % 12(@)(@@) % ملك خلائقه الزمانو صرفه % % فبفعله جار الزمان وأنصفا % % 13(@)(@@) % إن قطب البخلاء أسفر وجهه % % أو أسرفوا في المنع حارفأسرفا % % 14(@)(@@) % متبرع بنوالهجار على % % كرم الطباعإذا اللئيم تكلفا % % 15(@)(@@) % و مشتت شمل اللهى بأنامل % جمعت له شمل العلى فتألفا % % 16(@)(@@) % لولا نوال يد الغضنفر أصبحت % عرصات هذا المجد قاعا صفصفا % % 17(@)(@@) % لحظ الولي فعاد منه مؤملا % و رمى العدوفراح منه مخوفا % % 18(@)(@@) % شيم أرق من النسيمو ربما % % عصفت جنائبهافعادت حرجفا % % 19(@)(@@) % كم موقف لم يلق فيه كماته % % إلا على أجسام قوم موقفا % % 20(@)(@@) % ضنك إذا جلت السيوف قناته % % رفعت حوافره ظلاما مغدفا % % PageV01P563 21(@)(@@) % أقدمت فيه تهز أسمر ذابلا % لدنا لأرواح العدا متخطفا % % 22(@)(@@) % فإذا تأود صدره من طعنة % نجلاء عاد بغيرها فتثقفا % % 23(@)(@@) % فاسلم لكل فضيلة معروفة % لولاك طال على الورى أن تعرفا % % 24(@)(@@) % و البس غرائب مدحة دبجتها % % فكأنما دبجت منها مطرفا % % 25(@)(@@) % من كل بيت لو تجسم لفظه % % لرأيته وشيا عليك مفوفا % % 26(@)(@@) % و لئن توقف جود كفك معرضا % عنيفلم يك قبلها متوقفا % % 27(@)(@@) % خلفت في حظي لديكو إنني % % لأحب شكري أن يرى متخلفا % % PageV01P564 البحر : - 1(@)(@@) % هل للعليل سوى ابن قرة شافي % % بعد الإلهو هل له من كاف % % 2(@)(@@) % أحيا لنا علم الفلاسفة الذي % % أودى و أوضح رسم طب عاف % % 3(@)(@@) % فكأنه عيسى بن مريم ناطقا % يهب الحياة بأيسر الأوصاف % 4(@)(@@) % مثلت له قارورتيفرأى بها % % ما اكتن بين جوانحي وشغافي % % 5(@)(@@) % يبدو له الداء الخفي كما بدا % % للعين رضراض الغدير الصافي % % PageV01P565 البحر : - 1(@)(@@) % قضى بوقوف الركب حق المواقف % فروى صداها بالدموع الذوارف % 2(@)(@@) % رسوم كأن الطرف يقرأكلما % % تأملهاآي الهوى من صحائف % 3(@)(@@) % أباري بها دمع الحياو هو ذارف % و أخلفه في ربعها غير ذارف % 4(@)(@@) % و أعرفها لولا الذي فعل البلى % % و أنكرها لولا نسيم المعارف % 5(@)(@@) % سقاك الهوى صوب الدموع ملاطفا % و أي هوى يلقاك غير ملاطف % 6(@)(@@) % فلم تنسني الأيام فيكو قد 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms135# دجت % % سوالف أيام مضت كالسوالف % 7(@)(@@) % و أخضر من وشي الحدائق معلم % تجر عليه السحب وشي المطارف % 8(@)(@@) % إذا انصات في قرن من الشمس ضاحك % تمايل في دمع من المزن واكف % 9(@)(@@) % و لابسة في كأسها ثوب آمن % جلاها علينا الماء في ثوب خائف % 10(@)(@@) % إذا رعفت منها الأباريق خيلت % لأعيننا سرب الظباء الرواعف % PageV01P566 11(@)(@@) % تمسكت بالإنجيل لما أباحها % % و خالفت فيها نص ما في المصاحف % 12(@)(@@) % أردد لحظ العين بين شمامس % مصورة في كأسها وأساقف % 13(@)(@@) % فمن بين عار لم ينل من ثيابها % % و ملتحف منها بحمر الملاحف % 14(@)(@@) % أ أطلب إسعاف الزمانو قد ثنى % % إلى العاجز المأفون عطف مساعف % 15(@)(@@) % و آمل أن يجلو لذي اللب بعدما % % ترشفه ذو الجهل حلو المراشف % 16(@)(@@) % إذا لم يكن للنقص يوما بمنكر % فما هو للفضل المبين بعارف % 17(@)(@@) % سأمنح حلي الشعر صائغ حليه % % و إن لم يصغه لارتياد العوارف % 18(@)(@@) % ثناءكأفواف الرياض يشوبه % % عتاب كأنفاس الرياح الضعائف % 19(@)(@@) % ترقرق ماء الطبع في وجناته % % ترقرق إفرند السيوف الرهائف % 20(@)(@@) % أبا حسن إن المكارم جمة % و أحسنها إنصاف خل مناصف % PageV01P567 21(@)(@@) % تناسيت ودي من قديم وحادث % و أغفلت شكري من تليد وطارف % 22(@)(@@) % و أهملتنيحتى تحيفني العدا % % و كم ذدت عني الحيف من كل حائف % 23(@)(@@) % عصائب رق الستر بيني وبينهم % % فمن ساتر ما في الضمير وكاشف % 24(@)(@@) % يدبون في ليل النفاق كأنهم % % عقارب دبت في دجى متكاثف % 25(@)(@@) % إذا نسمت ريح الصديق عليهم % أهبوا عليها كل نكباء عاصف % 26(@)(@@) % و ما نقموا إلا مقالة معلن % بأن أبا السبطين خير الخلائف % 27(@)(@@) % إذا شئت أن تهدي لغل صدورهم % فأغضبهم يبدو كمون الكثائف % 28(@)(@@) % ألست تراهمإن رأوا لك نعمة % يفيضون غيظا من صدور لواهف % 29(@)(@@) % ترى أوجها تصفر حقدا كأنما % % يداف على أبشارها ورس رائف % 30(@)(@@) % و خزر عيون لم تكن لحظاتها % % لتصدر إلا عن قلوب رواجف % PageV01P568 31(@)(@@) % ألم ترني أقصرت غير مقصر % و أعرضت عن أعراضهم غير خائف % 32(@)(@@) % و كيف يبيع الحر عرض ابن حرة % بأعراض أبناء الإماء المقارف % 33(@)(@@) % أغرك منهم ذو لسان ملاطف % و قلب لإفراط الغليلمسايف % 34(@)(@@) % فأعطيتهم مدحا كزاهرة الربا % % و ودا كإيماض البروق الخواطف % 35(@)(@@) % و 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms136# كنت جديرا أن تحث إليهم % قواصف لفظ كالرعود القواصف % 36(@)(@@) % و تسلم عن أعراضهم بشوارد % مسومة توهي صفاة المقارف % 37(@)(@@) % فليس يكون المرء سلم صديقه % إذا لم يكن حرب العدو المخالف % PageV01P569 البحر : - 1(@)(@@) % فؤادي بك مشغوف % و دمعي فيك مذروف % 2(@)(@@) % و في وعدك إن جدت % به مطل وتسويف % 3(@)(@@) % أ أنسى موقف البين % و وجدي فيك موقوف % 4(@)(@@) % و قد شيعني طرف % بماء الشوق مطروف % 5(@)(@@) % و جادت حدق نجل % و مادت قضب هيف % 6(@)(@@) % و جالت حمرة الخد % كما جال التطاريف % 7(@)(@@) % فعقد الدمع محلول % و عقد الثغر مرصوف % 8(@)(@@) % و في الدمع لمن حم % ل ثقل البين تخفيف % 9(@)(@@) % و روض فيه تدبيج % من النور وتفويف % 10(@)(@@) % ألفنا طيب مثواه % % و طيب العيش مألوف % PageV01P570 11(@)(@@) % و صرف الدهر عنا ب % % أبي العباس مصروف % 12(@)(@@) % فتى بالجود مشغوف % و بالمعروف معروف % 13(@)(@@) % خلال لصلاح الده % % ر في أفيائها ريف % 14(@)(@@) % فيوم الجود بسام ؛ % و يوم الروع غطريف % 15(@)(@@) % له في الوفر تشتيت ؛ % و في العلياء تأليف % 16(@)(@@) % ندى لو كان من بحر % لأمنو هو منزوف % PageV01P571 البحر : - 1(@)(@@) % صب بغرات الصبا مكلف % منسحب مئزره والمطرف % 2(@)(@@) % يرغم من يلحى ومن يعنف % تشوقه حتى يكاد يتلف % 3(@)(@@) % خد أسيل و قوام أهيف % فصاحباه فتية وقرقف % 4(@)(@@) % و عدتاه سابح ومرهف % هاج هواه الدير والمستشرف % 5(@)(@@) % و روضه المدبج المفوف % ترب صحيح و هواء مدنف % 6(@)(@@) % للعين فيهأي وجه تصرف % بساط منثور نداه ينطف % 7(@)(@@) % له من الآس الجني رفرف % و جدول لجته لا تنزف % 8(@)(@@) % تصقل متنيه الرياح العصف % حيتانه دانية تلقف % 9(@)(@@) % فماؤه مروق منطف % مثل السراب افتر عنه النفنف % 10(@)(@@) % فهي على ساحاته ترفرف % كل بسهم حتفه مستهدف % PageV01P572 11(@)(@@) % ألحفتهنو الحمام ألحف % شبهته بالدرع حين ترصف % 12(@)(@@) % بها عيون لحظهن أوطف % يطرفها الماءو ليست تطرف % 13(@)(@@) % ثم تلاها قصب مجوف % مثل القنا ثقفه المثقف % 14(@)(@@) % و كل عقفاء إليه توصف % مثل الهلالو هي منه أنحف % 15(@)(@@) % من صفتيها الرفق والتعجرف % فلم تزل ترسل ثم تخطف % 16(@)(@@) % و نحن من أشتاتها نؤلف % كأنها خناجر تعطف % 17(@)(@@) % أحل لي عذابهن المصحف % و ليس عن صرف الحمام مصرف % PageV01P573 البحر : - 1(@)(@@) % تلاف السهم أثبت في الشغاف % و هل 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms137# ينجيك من تلف تلافي % % 2(@)(@@) % تذكرني العفافو ليس هذا % % أوان العفو عنكو لا العفاف % 3(@)(@@) % و قد برق الهجاء بقاصفات % تهم لها قناتك بانقصاف % 4(@)(@@) % فرشت لك البسيطة منه جمرا % يضر بذي الحذاءو أنت حافي % % 5(@)(@@) % و كيف تنال عارفتي وعفوي % % و لم تمح اعترافك باعتراف % 6(@)(@@) % أرى الجزار هيجني وولى % % و كاشفني وأسرع في انكشافي % % 7(@)(@@) % ورفع شعره بعيون شعري % % فشاب الشهد بالسم الزعاف % 8(@)(@@) % لقد شقيت بمديتك الأضاحي % % كما شقيت بغارتك القوافي % % 9(@)(@@) % توعر نهجها بكو هو سهل % وكدر وردها بكو هو صافي % % 10(@)(@@) % فتكت بها مثقفة النواحي % % على فكر أسد من الثقاف % PageV01P574 11(@)(@@) % لها أرج السوالف حين تجلى % % على الأسماعأو أرج السلاف % 12(@)(@@) % جمعن الحسنيينفمن رياح % معنبرة و أرواح خفاف % 13(@)(@@) % و ما عدمت مغيرا منك يرمي % % رقيق طباعها بطباع جافي % % 14(@)(@@) % كأن محاسن الأشعار شرع % تحببهفجاء على الخلاف % 15(@)(@@) % معان تستعار من الدياجي % % و ألفاظ تقد من الأثافي % % 16(@)(@@) % كأنك قاطف منها ثمارا % سبقت إليه إبان القطاف % 17(@)(@@) % و شر الشعر ما أداه فكر % تعثر بين كد واعتساف % 18(@)(@@) % لقد شكت القصائد منك ضيما % فهل حام يقيها الضيم كافي % % 19(@)(@@) % جريتو طرفها السباق جار % و ضقت وباعها الممتد وافي % % 20(@)(@@) % و تزعم أنك المشهور فضلا % فلم تخفى و برق الحين خافي % % PageV01P575 21(@)(@@) % تفاوتناو هل تخفى القدامى % % على لحظ العيون من الخوافي % % 22(@)(@@) % و فضل الهام من بغض الذنابى % % و عز التاج من ذل الخصاف % 23(@)(@@) % رميت من الهجاء بذي غمار % إذا ما فاض غرق ذا النطاف % 24(@)(@@) % و ضاق بك الفضاء الرحب لما % % عطفت عليك فضفاض العطاف % 25(@)(@@) % و لست أسيء مبتدئا و لكن % أجازي بالإساءة أو أكافي % % 26(@)(@@) % سأشفي الشعر منك بنظم شعر % تبيت له على مثل الأثافي % % 27(@)(@@) % و أبعد بالمودة منك جهدي % % فقف لي بالمودة خلف قاف % PageV01P576 البحر : - 1(@)(@@) % أمعنفيإن زدت في التعنيف % فاردد سوابق دمعي المذروف % 2(@)(@@) % سلت على قلبي ظبا أسيافها % % يوم النوى مقل الظباء الهيف % 3(@)(@@) % و أعدن برق الشوق يومض في الحشا % % بوميض برق من خلال سجوف % 4(@)(@@) % و رجوت أن أحيا برد تحية % فحييت من أجفانها بحتوف % 5(@)(@@) % أقمار تم في سواد حنادس % و غصون بان في رقاق شفوف 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms138# % 6(@)(@@) % لازال صوب المزن صبا آلفا % ينهل في ربع الصبا المألوف % 7(@)(@@) % وطن عهدت الدهر غير مخالف % في ظلهو الحي غير خلوف % 8(@)(@@) % ودعتهم شغفا بهمو جهلت ما % % يجني الوداع على الفتى المشغوف % 9(@)(@@) % فعرفت يوم البين منهجهكما % % عرف ابن نصر منهج المعروف % 10(@)(@@) % ملك رجوت نوالهفوجدته % % كثبا على الراجين غير قذيف % PageV01P577 11(@)(@@) % و لجأت من دهري إليهفكان لي % % ركنا على الحدثان غير ضعيف % 12(@)(@@) % و سريت في ليل الخطوب بوجهه % % فحمدت إشراق الهلال الموفي % % 13(@)(@@) % سبق الأمير إلى السماحفأتبعت % كفاه جودا سابقا برديف % 14(@)(@@) % و احتال في نظم الثناءو نثره % % في مشرقات قلائد وشنوف % 15(@)(@@) % شمس الندى يسموبعزم لو بدا % % للشمس يوما آذنت بكسوف % 16(@)(@@) % و ثقيل حلم منه أصبح كامنا % في حد مصقول الذباب خفيف % 17(@)(@@) % سادت بنو حمدان مجدا لم يزل % يثنى بحد أسنة وسيوف % 18(@)(@@) % وصلوا التليد بطارف فغدا لهم % % حبلا فخار تالد وطريف % 19(@)(@@) % و حوى أبو العباس كل فضيلة % تركت شريف القوم غير شريف % 20(@)(@@) % حنق على الأموال غير مبخل % قاس على الأعداء غير رؤوف % PageV01P578 21(@)(@@) % مدت إلي يد الخطوب فكفها % % عني بكف للنوال ألوف % 22(@)(@@) % و أحلني جدواه ذروة شاهق % متمنع صعب المرام منيف % 23(@)(@@) % لم ترمني الأيام فيه بنظرة % إلا انثنين بناظر مطروف % PageV01P579 البحر : - 1(@)(@@) % عاف الوقوف على المحل العافي % % و أقام إلف مودة الألاف % 2(@)(@@) % صب يواصلللصبابةقاطعا % و يلم من ألم الغرام بحاف % % 3(@)(@@) % ظام إلى الوجنات يورده الردى % % ورد بها يجنى بغير قطاف % 4(@)(@@) % و يزيده ضعف الخصورإذا انثنت % للوجدأضعافا على أضعاف % 5(@)(@@) % أيام يعطفهعلى لذاته % % خنث الشمائل مائس الأعطاف % 6(@)(@@) % و الشرب قد صبوا الصباح على الدجى % % ما بين ضوء سوالف وسلاف % 7(@)(@@) % و البدر يظهر في السحابكأنه % % عذراء تنظر من وراء سجاف % 8(@)(@@) % و الراح قد حملت لها ريح الصبا % % نفحات مسك بالعبير مداف % 9(@)(@@) % و تناهبت كاساتها ظلم الدجى % % نهب العفاة ندى أبي العطاف % 10(@)(@@) % حكم على الأيام يحكم في العدا % % و المال حكم مجانب الإنصاف % PageV01P580 11(@)(@@) % فمحله خضر الجناب من الندى % % عذب الموارد آمن الأكناف % 12(@)(@@) % حالي الثرى يجري النسيمإذا جرى % % صبحا بأنفاس عليه ضعاف % 13(@)(@@) % قطع الوفود به المسيرو طالما % % وصلوا الذميل إليه بالإيجاف % 14(@)(@@) % عرفوا الأمير 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms139# مواصلا معروفه % % بخلائق مسكية الأعراف % 15(@)(@@) % و كسوه من بدع القريض مدائحا % موشية كبدائع الأفواف % 16(@)(@@) % أعطى فقصر في العطاء بحاتم % وسطا فأخمل سطوة الجحاف % 17(@)(@@) % في معرك طاف الردى بكماته % % عند اختلاف الطعن أي طواف % 18(@)(@@) % فإذا السنابك أنشأت ليلا به % % ثقب الصباح له سنا الأسياف % 19(@)(@@) % من أسرة أسرت لها صيد العلى % % وقفافا أصيد في الردى وقاف % 20(@)(@@) % جعلوا السيوف لكل خطب معقلا ؛ % إن السيوف معاقل الأشراف % % PageV01P581 21(@)(@@) % و كساهم صفو النجاة خلائقا % أصفى من الماء الزلال الصافي % % 22(@)(@@) % فلهم عزائم ما امتضين صوارما % إلا جلين بها دجى الأسياف % 23(@)(@@) % و محل عز شامل ما احتله % % باغ كساه البغي ثوب خلاف % 24(@)(@@) % إلا رأى الرايات تخفق حوله % % و رأى الوشيج مخضب الأطراف % PageV01P582 البحر : - 1(@)(@@) % قد عقلت اللسان دونكو الخا % % ئن من سلطت عليه القوافي % % 2(@)(@@) % و أرى الوعد منك في كل يوم % ثمرا غير مؤذن بقطاف % 3(@)(@@) % فتنبهفأنت ما بين شهد % من لساني وبين سم ذعاف % PageV01P583 البحر : - 1(@)(@@) % ألا يا بن فهد وقيت الردى % % فأنت الجواد الأديب الشريف % 2(@)(@@) % صرفنا الأعنة نحو المدام % و ما للزمان علينا صروف % 3(@)(@@) % فغابت كواكب لذاتنا % % و أعجل شمس المدام الكسوف % 4(@)(@@) % فجد بالتي عندها للسرور % حياة و للهم فيها حتوف % 5(@)(@@) % فما جاد بالراح إلا الجواد % و ما كبر الظرف إلا الظريف % PageV01P584 البحر : - 1(@)(@@) % رفق الزمان بناو كان عنيفا % % و غدا لنا بعد القراع حليفا % % 2(@)(@@) % و دنت ظلال المكرماتو ذللت % أثمارها للطالبين قطوفا % % 3(@)(@@) % أهلا بمن رعت المدائح روضه % % فعرفن في أيامه المعروفا % % 4(@)(@@) % و حنته رأفته على زواره % فأراهم خلق النوائب ريفا % % 5(@)(@@) % قدمت بمقدمه المكارمفاغتدت % خضرا ترف على العفاة رفيفا % % 6(@)(@@) % و زهت بلاد الحصن بالقمر الذي % % أهدى إلى القمر المنير كسوفا % % 7(@)(@@) % نظم الأمير لها قلائد سؤدد % أشرفن في لباتهاو شنوفا % % 8(@)(@@) % و غدا الفرات لبيته متضائلا % لا يستبين ضؤولة ونحوفا % % 9(@)(@@) % فلو استطاع إليه قصدا لا نكفى % % حتى يرى عن قصده مصروفا % % 10(@)(@@) % لولا أبو العطاف لم تلق الندى % % غضا و لم يكن الزمان عطوفا % % PageV01P585 11(@)(@@) % ملك يراه عدوه متحننا ؛ % و يراه طالب رفده مألوفا % % 12(@)(@@) % مغض و ليس لحاظه إن بثها % % إلا حياة غضة وحتوفا 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms140# % % 13(@)(@@) % و أغر يأنف أن يصد عن الوغى % % حتى يذل معاطسا وأنوفا % % 14(@)(@@) % و فتى إذا شغف الملوك بحفظهم % % أضحى بخفض عدوه مشغوفا % % 15(@)(@@) % سائل بصولته ابن مزروع وقد % % ولى يشق من العجاج سجوفا % % 16(@)(@@) % و أرته خيفة سيفه وسنانه % % لين المهاد أسنة وسيوفا % % 17(@)(@@) % أوفى عليه مقارعا حتى إذا % % أعطى القياد أجاره ملهوفا % % 18(@)(@@) % طوقته بالمنحين ملكته % % طوقا ثقيلا في الرقاب خفيفا % % 19(@)(@@) % و الديلمي هفت به أمنية ؛ % غرر يفيد اللوم والتعنيفا % % 20(@)(@@) % وافاك كالمحتال يختل صيده % % فأثار منك الأصيد الغطريفا % % PageV01P586 21(@)(@@) % و أحق من يضحي فريسة ضيغم % من راح مقتحما عليه عريفا % % 22(@)(@@) % قيدت لحظ جفونهفأريته % % رأد الضحى ليلا عليه كثيفا % % 23(@)(@@) % و تركته ما إن يعاين إلفه % إلا خيالا في المنام مطيفا % % 24(@)(@@) % و كذاك من شبت بأرضك ناره % أضحى بنارك طرفه مطروفا % % 25(@)(@@) % لا تعد منك ربيعة الفرس التي % % عمرت جنابك مربعا ومصيفا % % 26(@)(@@) % أحللتها للجود روضا معشبا % سهلا و طودا للفخار منيفا % % 27(@)(@@) % فاسلمفكم شيدت من أكرومة % و هدمت تالد ثروة وطريفا % % 28(@)(@@) % و تملها غراء لست بملبس % أفوافها إلا أغر شريفا % % 29(@)(@@) % رقت ورق كلامهافكأنما % % جلبت ربيع محاسن وخريفا % % 30(@)(@@) % و كأن لابسها يعاين جوهرا % من لفظها أو يستشف شفوفا % % PageV01P587 31(@)(@@) % لو صافحت سمع ابن أوس لم يقل % أطلالهم سلبت دماها الهيفا % % PageV01P588 البحر : - 1(@)(@@) % شعر ابن أوس رياض جمة الطرف % فنحن منه مدى الأيام في تحف % 2(@)(@@) % لكن كرهناه لما سار في طرق % من فيك مكروهة الأنفاس والنطف % 3(@)(@@) % و الشعر كالريح إن مرت على زهر % طابتو تخبث إن مرت على الجيف % PageV01P589 البحر : - 1(@)(@@) % قمر تفرد بالمحاسن كلها % % فإليه ينسب كل حسن يوصف % 2(@)(@@) % فجبينه صبح و طرته دجى % % و قوامه غصن رطيب أهيف % 3(@)(@@) % لله ذاك الوجه كيف تألفت % فيه بدائع لم تكن تتألف % 4(@)(@@) % ورد يعصفره الحياءو نرجس % يغضيإذا طال العتابو يطرف % PageV01P590 البحر : - 1(@)(@@) % ألا سقني الصهباء صرفا فإنني % % لمن لام فيها ما حييت مخالف % 2(@)(@@) % ألست ترى وشي الرياض كأنما % % تنشر في أرجائهن المطارف % 3(@)(@@) % و مشمولة شج السقاة كؤوسها % % فأشرق وجه الصبحو الليل عاكف % 4(@)(@@) % و لاح على الكاسات فاضلهاكما % % تلوح على حمر الخدود السوالف % PageV01P591 البحر : - 1(@)(@@) % يا ابن حسانو الأنام 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms141# ضروب % حين تتلو أخبارهمو صنوف % 2(@)(@@) % غرني منك ناظر يكثر الإط % % راق سمتا و شارب محفوف % 3(@)(@@) % و تكشفتفالعوار الذي ما % % زلت تخفيه ظاهر مكشوف % 4(@)(@@) % مولع بالقطوب يظهر سخطا % و رضاهإذا استشاططفيف % 5(@)(@@) % كنت أبقي على العذولو ما أد % % ري بأن العذول طرا لفيف % PageV01P592 البحر : - 1(@)(@@) % رب منيف في ذرى منيف % أركانه مرهفة السيوف % 2(@)(@@) % تخفق تحت عارض كثيف % كهودج ممسك السحوف % 3(@)(@@) % لفتية على الهوى عكوف % قد بكروا للقنص المألوف % 4(@)(@@) % بحالك الجلباب والنصيف % أوضاحه من درعه الرصيف % 5(@)(@@) % فرد تخيرناه من ألوف % مؤيد بعسكر الحتوف % 6(@)(@@) % يكشر عن خناجر صفوف % تضمن للصحب قرى الضيوف % 7(@)(@@) % تراه قبل شده العنيف % مخضب الظفر من الغضروف % 8(@)(@@) % عناقه للخائن الملهوف % عناق لا بر ولا عطوف % 9(@)(@@) % آنس في مطمورة الحتوف % موشيةكالبرد ذي التفويف % 10(@)(@@) % تضحك عن دمع الحيا المذروف % سرب مها كاللؤلؤ المشوف % PageV01P593 11(@)(@@) % أسلمها المشتى إلى المصيف % فرتعت في نعم الخريف % 12(@)(@@) % فشامها بمقلتي غطريف % و امتد كالصعدة في التثقيف % 13(@)(@@) % و انصب للحين انصباب موف % فشك بين النحر والشرسوف % 14(@)(@@) % مثل سنان القين ذي التأنيف ؛ % طراد لا وان ولا ضعيف % 15(@)(@@) % و أخذ جبار بها عسوف % و راح قد جل عن التعنيف % 16(@)(@@) % في يوم قر جادع الأنوف % ينقض مثل الكرسف النديف % 17(@)(@@) % أو مثل كافورته السفوف % عن أذنيه وعن الصليف % 18(@)(@@) % مثل انفصام العقد والشنوف % فنحن من عطائه في ريف % 19(@)(@@) % و نعمة دانية الرفيف % بين قديد اللحم والصفيف % 20(@)(@@) % نعمة رحمان بنا رؤوف % % PageV01P594 البحر : - 1(@)(@@) % أبا بكر أسأت الظن فيمن % % سجيته التمنع والخلاف % 2(@)(@@) % و خفت عليه في الخلوات مني % % و لم تك بيننا حال تخاف % 3(@)(@@) % جفوت من الصبا ما ليس يجفى % % و عفت من الهوى ما لا يعاف % 4(@)(@@) % فلو أني هممت بقبح فعل % لدى الإغفاء أيقظني العفاف % PageV01P595 البحر : - 1(@)(@@) % هواء كالهوى حسنا و ظرفا % % و خيش ليس يترك أن يجفاحذف % % 2(@)(@@) % و فتيان كرام باكروه % % و نجم صباحهم يبدو و يخفى حذف % % 3(@)(@@) % فإن بادرتهم جعلوك بدرا % و إن خالفتهم جعلوك خلفاحذف % % PageV01P596 البحر : - 1(@)(@@) % أنى يعود من الصبابة مفرقا % % و لقاؤهم للبين غادره لقا % % 2(@)(@@) % لم تعترض غزلانهم يوم النقا % % إلا لكي يخجلن غزلان النقا % % 3(@)(@@) % رفعوا 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms142# القبابو فرقت أظعانهم % % فرقا أمرن الصبر أن يتفرقا % % 4(@)(@@) % و وراءهم دمع إذا أوطأته % % يوم النوى عنق التجلد أعنقا % % 5(@)(@@) % هن الحيا حرم الغميم غمامه % % و سرت بوارقه يجدن الأبرقا % % 6(@)(@@) % لم يغن من تلك المحاسن منزل % إلا تقاضاه الفراقفأملقا % % 7(@)(@@) % ترقا الدموعو لي على آثارهم % % دمع رقاه العاذلون فما رقا % % 8(@)(@@) % لا أحسب الأجفان يلقى بعضها % % بعضا إذا كان الفراق الملتقى % % 9(@)(@@) % أشقيقة الجزعينأية لوعة % عجنا عليكغداة عجنا الأينقا % % 10(@)(@@) % منحتك أنفاس الصبا ما استودعت % و سقاك رقراق الحيا ما روقا % % PageV01P597 11(@)(@@) % أيشوقني طرب الشبابو إنما % % شغف الهلال بحيث تم وأشرقا % % 12(@)(@@) % و العود ليس يعد تربا موطنا % إلا إذا ما اهتز فيه وأورقا % % 13(@)(@@) % و لقد وصلت إلى الجواد مغربا % من بعد ما خضت اللئام مشرقا % % 14(@)(@@) % و زجرت أمثال الأهلة بل ترى % % أجرامهن من الأهلة أمحقا % % 15(@)(@@) % و خلعت جلباب الظلام ممسكا % و لبست جلباب الصباح مخلقا % % 16(@)(@@) % فالآن ناضلت الخطوب بصائب % يصميو كم ناضلتهن بأفوقا % % 17(@)(@@) % و رأيت سيف الدولة السيف الذي % % يزداد في ظلم الكريهة رونقا % % 18(@)(@@) % أوفى فكان محلقا و مضى فكا % % ن مزلقا وسطا فكان محرقا % % 19(@)(@@) % متبسم ينهل في استهلاله % % ماء الحياةفإن تلهب أصعقا % % 20(@)(@@) % نالت يداه أقاصي المجد الذي % % بسط الحسود إليه باعا ضيقا % % PageV01P598 21(@)(@@) % أعدوههل للسماك جريرة % في أن دنوت من الحضيض وحلقا % % 22(@)(@@) % أم هل لممتلىء اليدين من العلا % % ذنب إذا ما كنت منها مملقا % % 23(@)(@@) % صبرا فلست تنال أدنى سعيه % % إلا إذا نلت الصبير المبرقا % % 24(@)(@@) % عذبت بصفو المكرمات صفاته % % فأتى خليقا بالمكارم أخلقا % % 25(@)(@@) % في جمرة الحسب التي لا تصطلى % % و ذؤابة الشرف التي لا ترتقى % % 26(@)(@@) % يدنو إلى الأمل البعيد بهمة % تغتال أبعد من مداه وأسحقا % % 27(@)(@@) % فحذار من لحظ الشجاعإذا رنا ؛ % و حذار من عزماته إن أطرقا % % 28(@)(@@) % ركز الرماح على الثغورفأصبحت % % سورا على تلك الفجاج وخندقا % % 29(@)(@@) % مستيقظا لو رنقت أجفانه % % عن مشرب الأيام عاد مرنقا % % 30(@)(@@) % لم يسر عارضه إلى أعدائه % % إلا ليمطرهم دما متدفقا % % PageV01P599 31(@)(@@) % حرقت سراياه الدروبكأنها % % بحر تدافع موجهفتخرقا % % 32(@)(@@) % حتى أباح حريمهملا ظالما % و حنا على أبكارهم لا مشفقا % % 33(@)(@@) % رفع القنا عن حمل هام ملوكهم % % فغدا وراح على 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms143# الخليج مفلقا % % 34(@)(@@) % في كل أفق منه سهم منية % يرنو إلى كبد العدو مفوقا % % 35(@)(@@) % خيل تمزق كل يوم مأزقا % و ظبا تفلق كل يوم فيلقا % % 36(@)(@@) % إسعد بعيدك والق ما تهوى به % % و ليلق من عاداك خطبا موبقا % % 37(@)(@@) % نحر نحرت البدن فيه مسددا % و فتكت بالأعداء فيه موفقا % % 38(@)(@@) % دميان ما تاق الشجاع إليهما % % إلا إذا خلط الشجاعة بالتقى % % 39(@)(@@) % حملتني نعما شرفت بحملها % % فإذا نطقت بها نطقت مصدقا % % 40(@)(@@) % لا تفصم الأيام طوقيإنني % % أصبحت بالإحسان منك مطوقا % % PageV01P600 البحر : - 1(@)(@@) % أما الخيالفما يغب طروقا % % يدنو بوصلك شائقا ومشوقا % % 2(@)(@@) % وفى فحقق لي الوفاءو لم يزل % خدن الصبابة بالوفاء حقيقا % % 3(@)(@@) % و مضى و قد منع الجفون خفوقها % % قلب لذكرك لا يقر خفوقا % % 4(@)(@@) % هل عهدنا بلوى الشقيقة راجع % فيعود لي فيه الوصال شقيقا % % 5(@)(@@) % أيام وصلك في الصبابة مجهلا % لا يعرف السلوان فيه طريقا % % 6(@)(@@) % أهوى أنيق الحسن مقتبل الصبا % % و أزور مخضر الجناب أنيقا % % 7(@)(@@) % راح الغمام به صفيقا ثوبه % % و غدا به ثوب النسيم رقيقا % % 8(@)(@@) % هي غدرة للدهر غادرت الهوى % % بعد الوفاءمكدرا مطروقا % % 9(@)(@@) % لا ألحظ الأيام لحظة وامق % حتى يعيد زماننا الموموقا % % 10(@)(@@) % و ركائب يخرجن من غلس الدجى % % مثل السهام مرقن منه مروقا % % PageV01P601 11(@)(@@) % و الفجر مصقول الرداء كأنه % % جلباب خود أشبعته خلوقا % % 12(@)(@@) % أغمامة بالشام شمن بروقها % % أم شمن من بشر الأمير بروقا % % 13(@)(@@) % ملك تسهل بالسماح يمينه % % حزنا و توسع بالصوارم ضيقا % % 14(@)(@@) % يلقى الندى برقيق وجه مسفر % فإذا التقى الجمعان عاد صفيقا % % 15(@)(@@) % رحب المنازل ما أقامفإن سرى % % في جحفل ترك الفضاء مضيقا % % 16(@)(@@) % ما انفك يطلع بالحتوف على العدا % % صبحاو يطرق بالحمام طروقا % % 17(@)(@@) % فإذا جرى للمجد نال صبوحه % % سبقا ونال الناس منه غبوقا % % 18(@)(@@) % و إذا طمى بحر الكريهة خاضه % % فأمات من عاداه فيه غريقا % % 19(@)(@@) % مهلا عداة الدينإن لخصمكم % % خلقا بإرغام العدو خليقا % % 20(@)(@@) % أنذرتكم حامي الحقيقة لا يرى % % إلا لمرهفة السيوف حقوقا % % PageV01P602 21(@)(@@) % سدت عزائمه الثغورو حالفت % آراؤه التسديد والتوفيقا % % 22(@)(@@) % و رمى بلاد الروم بالعزم الذي % % مازال صبحا في الظلام فتيقا % % 23(@)(@@) % رزحت مخائل بأسه في عارض % متألق يغشى العيون بريقا % % 24(@)(@@) % جيش إذا لاقى العدو 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms144# صدوره % % لم تلق للأعجاز منه لحوقا % % 25(@)(@@) % حجبت له شمس النهارو أشرقت % شمس الحديد بجانبيه شروقا % % 26(@)(@@) % أخلى معاقلهم وحاز نهابهم % % قسرا و فرق جمعهم تفريقا % % 27(@)(@@) % فتضرجت تلك البطاح به دما % و تضرمت تلك الفجاج حريقا % % 28(@)(@@) % و ثنى الجياد يشق جيب عجاجها % % و مضى السيوف فينثني مشقوقا % % 29(@)(@@) % و الدهر مبتسم يروق كأنما % % أبدى بطلعته الثنايا الروقا % % 30(@)(@@) % فتح جليل القدر زيد به الهدى % % برا كما زيد الضلال عقوقا % % PageV01P603 31(@)(@@) % أعليكم نعم منحت جليلة % منحتك معنى في الثناء دقيقا % % 32(@)(@@) % و ندى رفعت به لحيي تغلب % شرفا أناففعانق العيوقا % % 33(@)(@@) % فاسلم لمكرمة شغلت بحبها % % قلبا بحب المكرمات علوقا % % 34(@)(@@) % و تمل مدحيإنه ريحانة % نفحتفباشرها اللبيب طليقا % % 35(@)(@@) % شعشعت منه اللفظ ثم نظمته % % فكأنما شعشعت منه رحيقا % % 36(@)(@@) % قد كان غفلا قبل جودكفاغتدى % % علما بجودك في الورى مرموقا % % PageV01P604 البحر : - 1(@)(@@) % أعددت لليلإذا الليل غسق % و قيد الألحاظ من دون الطرق % 2(@)(@@) % أغصان تبر عريت عن الورق % ثمارها مثل مصابيح الأفق % 3(@)(@@) % يغني الندامى ضوؤها عن الفلق % شفاؤها إن مرضت ضرب العنق % % PageV01P605 البحر : - 1(@)(@@) % أمحل صبوتنادعاء مشوق % يرتاح منك إلى الهوى الموموق % 2(@)(@@) % هل أطرقنالعمربين عصابة % سلكوا إلى اللذات كل طريق % 3(@)(@@) % أم هل أرى القصر المنيف معمما % برداء غيم كالرداء رقيق % 4(@)(@@) % و قلالي الدير التي لولا النوى % % لم أرمها بقلىو لا بعقوق % 5(@)(@@) % محمرة الجدران ينفح طيبها % % فكأنها مبنية بخلوق % 6(@)(@@) % و محل خاشعة القلوب تفردوا % % بالذكر بين فروقه وفروق % 7(@)(@@) % أغشاه بين منافق متجمل % و مناضل عن كفره زنديق % 8(@)(@@) % و أغن تحسب جيده إبريقه % % ما قام يسفح عبرة الإبريق % 9(@)(@@) % يتنازعون على الرحيق غرائبا % يحسبن زاهرة كؤوس رحيق % 10(@)(@@) % صدرت عن الأفكارو هي كأنها % % رقراق صادرة عن الراووق % PageV01P606 11(@)(@@) % دهر ترفق بي فواقا صرفه % % وسطا عليفكان غير رفيق % 12(@)(@@) % فمتى أزور قباب مشرفة الذرى % % فأرود بين النسر والعيوق % 13(@)(@@) % و أرى الصوامع في غوارب أكمها % % مثل الهوادج في غوارب نوق % 14(@)(@@) % حمرا تلوح خلالها بيض كما % % فصلت بالكافور سمط عقيق % 15(@)(@@) % كلف تذكر قبل ناهية النهى % % ظلينظل هوىو ظل حديق % 16(@)(@@) % فتفرقت عبراته في خده % % إذ لا مجير له من التفريق % PageV01P607 البحر : - 1(@)(@@) % نفسي فداؤك هاديا % تهدى بها 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms145# عصب الرفاق % 2(@)(@@) % كالبدر يحسب في التما % % مو قد ترفع بالمحاق % 3(@)(@@) % أوفى على طرق أقا % % م فليس يؤذن بانطلاق % 4(@)(@@) % متوشحا فيه دما % كحمائل البيض الرقاق % 5(@)(@@) % و مضارع الجوزاء لي % % لا في علو واتساق % 6(@)(@@) % فكأنه وكأنها % % إلفان هما باعتناق % PageV01P608 البحر : - 1(@)(@@) % ألست ترى ركب الغمام يساق % و أدمعه بين الرياض تراق % 2(@)(@@) % و قد رق جلباب النسيم على الندى % % و لكن جلابيب الغيوم صفاق % 3(@)(@@) % و عندي من الريحان نوع تحبه % و كأس كرقراق الخلوق دهاق % 4(@)(@@) % و ذو أدب جلت صنائع كفه % % و لكن معاني الشعر فيه دقاق % 5(@)(@@) % لنا أبدا من نثره ونظامه % % بدائع حلي ما لهن حقاق % 6(@)(@@) % و أغيد مهتز على صحن خده % غلائل من صبغ الحياء رقاق % 7(@)(@@) % أحاطت عيون العاشقين بخصره % % فهن لهدون النطاق نطاق % 8(@)(@@) % و قد نظم المنثورفهو قلائد % عليناو عقد مذهب وخناق % 9(@)(@@) % و غرفتنا بين السحائب تلتقي % % لهن عليهاكلة ورواق % 10(@)(@@) % تقسم زوار من الهند سقفها % % خفاف على قلب النديم رشاق % PageV01P609 11(@)(@@) % أعاجم تلتذ الخصام كأنها % % كواعب زنج راعهن طلاق % 12(@)(@@) % أنسن بنا أنس الإماء تحببت % و شيمتها غدر بنا وإباق % 13(@)(@@) % مواصلة و الورد في شجراته ؛ % مفارقة إن حان منه فراق % 14(@)(@@) % فزر فتية برد الشراب لديهم % حميم إذا فارقتهم وغساق % 15(@)(@@) % إذا اشتهرت بالحسن أخلاق صاحب % فليسلمخلوق جفاه خلاق % PageV01P610 البحر : - 1(@)(@@) % لم يشف بالدمع عليل الفراق % إذ شيع الظعن بدمع مراق % 2(@)(@@) % سيقت لوشك البين أظعانهم % % و النفس من بينهم في السياق % 3(@)(@@) % صبابة ضاق بها صدره ؛ % و أدمع ضاقت بهن المآق % 4(@)(@@) % أما اشتفى الواشون من عاشق % يلقى من البين الذي أنت لاق % 5(@)(@@) % رمته باللحظ عيون العدا % % من قبل أن يحظى بطيب العناق % 6(@)(@@) % فجال ماء الشوق في جفنه % % و احتبست أنفاسه في التراق % 7(@)(@@) % و زائر أسعفني بالمنى % % زورا و قد هوم حادي الرفاق % 8(@)(@@) % أعلني شوقا إلى حسنه % % إذ زار في النوم عليل اشتياق % 9(@)(@@) % لله ما أوثق عهد الهوى % % منهو ما أضعف عقد النطاق % 10(@)(@@) % ينشر لي ذكراه نشر الصبا % % و بارق لاح بأعلى البراق % PageV01P611 11(@)(@@) % في عارض أذهب أعلامه % % بالبرقحتى خلته في احتراق % 12(@)(@@) % لو أنصف الأعداء لم يصرموا % % لما تقضى 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms146# الودحبل النفاق % 13(@)(@@) % كأنني بالشعر ألقاهم % بمثل وقع المرهفات الرقاق % 14(@)(@@) % في وقعة ليس لها كاشف ؛ % و صيحة ليس لها من فواق % 15(@)(@@) % جرى ابن فهد سابقا في العلى % % أكفاءهو السبق حظ العتاق % 16(@)(@@) % فعاش في عيش منيع الحمى % % منتشر الظل فسيح الرواق % 17(@)(@@) % و إن جفا عبدا له واصلا % معتلقا بالود أي اعتلاق % % 18(@)(@@) % لا يترجى فك رق و لا % % يخشى عليه موبقات الإباق % % 19(@)(@@) % و كم أردت الهجر لكنني % % وجدته مرا كريه المذاق % % 20(@)(@@) % عرابد عندك أرمى بها % % بين صبوح دائم واغتباق % % PageV01P612 21(@)(@@) % و تهمة في الشعر من جاهل % مازال فيه عاجزا عن لحاق % % 22(@)(@@) % لقد أتاح الدهر لي شقوة % إذ خصني منك بهذا الشقاق % % 23(@)(@@) % و كل أخلاقك مرضية % فما لخل ذمها من خلاق % PageV01P613 البحر : - 1(@)(@@) % و زنجية عرفت بالإباق % فليس لها راحة من وثاق % 2(@)(@@) % إذا اضطرب الماء من حولها % % رأيت الجبال بها في تلاقي % % 3(@)(@@) % يثور بها قسطل أبيض % على القوم غير كثيف الرواق % 4(@)(@@) % فأبناؤها المرد شيب الرؤوس % و أبناؤها السود بيض التراقي % % 5(@)(@@) % ركبنا إليهاغداة الصبوح % مطايا تحث بدهم العتاق % 6(@)(@@) % وظلنا نميت لديها الزقاق % و نحيي السرور بموت الزقاق % PageV01P614 البحر : - 1(@)(@@) % عذيري من الدين الذي راح عبؤه % % على كل قلب لا على كل عاتق % 2(@)(@@) % و مرتقب ليغدوة وعشية % يسائل عنيو هو لي غير وامق % 3(@)(@@) % و مطوية كالسابرية أدرجت % على فقر مثل الجبال الشواهق % 4(@)(@@) % فباطنها كالبرد نمنم وشيه % % و ظاهرها كالآل بين السمالق % 5(@)(@@) % و رب فتى يلقى السيوف بوجهه % % و يعجز عن لقيا سيوف الوثائق % 6(@)(@@) % ألنت لهم لفظيو لو كنت آمنا % شهادة خرس بالحقوق نواطق % 7(@)(@@) % للاقت حقوق القوم حلفة باطل % كما لاقت الشجراء إحدى الصواعق % PageV01P615 البحر : - 1(@)(@@) % و طيب النشر عبق % بريق الغيث شرق % 2(@)(@@) % تناجت المزن له % % بالرعد في غير صعق % 3(@)(@@) % و عني البرق به % % فكلما عق ودق % 4(@)(@@) % و انتثرت غدرانه % % في روضة نثر الورق % 5(@)(@@) % يشقه ذو قلق % مثل حشا الصب القلق % 6(@)(@@) % ينسل بين وشيه % مثل الحسام المؤتلق % 7(@)(@@) % إذا جلا الغيم له % % عن حاجب الشمس برق % 8(@)(@@) % باشر صحبي برده % % قبل تباشير الفلق % 9(@)(@@) % نطرق من حيتانه % صيد حجاب ما طرق % 10(@)(@@) % فصافحت صفحته % % كل 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms147# جديد كالخلق % PageV01P616 11(@)(@@) % يبعث منه جسدا % أعضاؤه طرا حدق % % 12(@)(@@) % يريك درعا جعلت % لجوشن الماء طرق % 13(@)(@@) % إذا نجا من غرق % ردفعاد في غرق % 14(@)(@@) % آخذ ما عن له % % و ضامن ما قد أبق % 15(@)(@@) % فما تني بينهم % جواهر الرزق نسق % 16(@)(@@) % مجنحات لبست % غرائب الوشي اليقق % 17(@)(@@) % كأنما أعينها % % فصوص ياقوت زرق % 18(@)(@@) % و ربما ملنا على الط % طير وقد وافت حزق % 19(@)(@@) % كل غريب نقشت % حلته نقش السرق % 20(@)(@@) % ينصب في الأرض لها % % عقال حتف كالوهق % PageV01P617 21(@)(@@) % خفية أوتاده % % ظاهرة منه الحلق % 22(@)(@@) % يكاد يخفى شخصه % % ضؤولةإذا رمق % % 23(@)(@@) % حف برزق ربما % % أردى الذي منه رزق % 24(@)(@@) % فالطير من حر دحى % ملكة ومسترق % 25(@)(@@) % و حائر يفري السكا % % كينإذا قيل علق % 26(@)(@@) % و ذي سكون قد قضى % % و خافق فيه رمق % 27(@)(@@) % كذلك الأرزاق من % % صفو حميد ورنق % PageV01P618 البحر : - 1(@)(@@) % كشف الصباح قناعه فتألقا % % وسطا على الليل البهيمفأشرقا % % 2(@)(@@) % و علا فنشر بالصباح موشح % بالوشي توج بالعقيق وطوقا % % 3(@)(@@) % مرخ فضول التاج في لباته % % و مشمر وشيا عليه منمقا % % 4(@)(@@) % فاشربعلى طيب الزمان وحسنه % % كأسا تزيدك لوعة وتشوقا % % 5(@)(@@) % يضحي السرور بها مليكا مطلقا % و الهم في يدها أسيرا موثقا % % 6(@)(@@) % أهدت إليك المسك من أنفاسها % % طرقا تروق الطرف حسنا ريقا % % 7(@)(@@) % و حدائق ضربت ضروب جمالها % % سورا عليك من اللذاذة محدقا % % 8(@)(@@) % و مدامة رقتفخلت حبابها % % دمعا على ورد الخدود ترقرقا % % 9(@)(@@) % و رقيق ألحاظ الجفونإذا رنا % % منع الجوى في القلب أن يترفقا % % 10(@)(@@) % و أغر يكبره النديم جلالة % حتى يفض له الجفون ويطرقا % % PageV01P619 11(@)(@@) % ملك إذا لاحت محاسن وجهه % % في الغرب خلنا الغرب منه مشرقا % % 12(@)(@@) % أعلي آثرت العلى فتجمعت % و أهنت مالك بالندى فتفرقا % % 13(@)(@@) % فاخضب يمينك بالمدامفطالما % % خضبت أناملها السنان الأزرقا % % 14(@)(@@) % وكل الهموم إلى الحسودفحسبه % % أن يقطع الليل التمام تأرقا % % 15(@)(@@) % فضل الفتى يغري الحسود بسبه % % فالعود لولا طيبه ما أحرقا % % PageV01P620 البحر : - 1(@)(@@) % يا ليلة جمعتنا بعد مفترق % فبت من صبحهاحتى بدافرقا % % 2(@)(@@) % لما خلوتبمن أهوى بها % % فكاد يسبق منها فجرها الشفقا % % PageV01P621 البحر : - 1(@)(@@) % إني عشقت من السعادة مسعدا % % ليسفغدا مشوقا شائقا % % 2(@)(@@) % فإذا دنا جعل الزيارة شأنه ؛ % و إذا نأى بعث الخيال الطارقا % % 3(@)(@@) % عاتبته يوما و في وجناته 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms148# % % ورد فصار من الحياء شقائقا % % PageV01P622 البحر : - 1(@)(@@) % أهلا وسهلا بطارق طرقا % % أحببت فيه السهاد والأرقا % % 2(@)(@@) % زار على غفلة الرقيبو يم % % ناه تداري وشاحه القلقا % % 3(@)(@@) % فبت منه معانقا صنما % ينفح مسكا وعنبرا عبقا % % 4(@)(@@) % لو شئت أنشأت من ذوائبه % % ليلا و من نور وجهه فلقا % % PageV01P623 البحر : - 1(@)(@@) % تشاغل عني بطيب الكرى % % و قلبي أسير به موثق % 2(@)(@@) % فلا ماء عيني من حرقة % يغيضو لا نومها يطرق % 3(@)(@@) % كأن الصباح أسير نأى % % فليس يفكو لا يطلق % PageV01P624 البحر : - 1(@)(@@) % ألبرق سرى بأعلى البراق % بات رهنالحنين والأشواق % 2(@)(@@) % أم لطيف أعله الشوق حتى % % زار تحت الدجى عليل اشتياق % 3(@)(@@) % مغرم بالدنوبعد التنائي % % و التلاقي من بعد وشك الفراق % 4(@)(@@) % عرجوا فالكثيب مغنى الغواني % % و قفوافهو موقف العشاق % 5(@)(@@) % دمن لاتزال تذكر عهدا % من وفي بالعهد والميثاق % 6(@)(@@) % قمر رق للمحبفجادت % مقلتاه بواكف رقراق % 7(@)(@@) % جار حكم النوى عليهو لكن % % لم يجر في سناه حكم المحاق % 8(@)(@@) % عذبت لوعة الصبابة فيه % فأرتنا السلو مر المذاق % 9(@)(@@) % كلف ضاق في الجوانح مثوا % % هو دمع تضيق عنه المآقي % % 10(@)(@@) % و فراق جنى علي انتكاس ال % % حب من بعد راحة الأفراق % PageV01P625 11(@)(@@) % لي منه صبابة في اتئاد % ليس تنأى و عبرة في استباق % 12(@)(@@) % كم فلاة فلت شباها المهارى % % برفاق تهوي أمام رفاق % 13(@)(@@) % و كأن الظلماء قد دجاها % % من سواد القلوب والأحداق % 14(@)(@@) % يا بن فهد و أنت منتجع الرك % بو غيث الوفود والطراق % 15(@)(@@) % قد لعمري جريت في حلبة المج % دفحزت السباق عند السباق % 16(@)(@@) % بغدو من العلى ورواح % واصطباح من الندى واغتباق % 17(@)(@@) % و سجايا فلت شبا الدهر بأسا % و عطايا كفلن بالأرزاق % 18(@)(@@) % كرم جدد السماحو قد هم % م جديد السماح بالإخلاق % 19(@)(@@) % برحيب الفناءيرهبه الده % رو لا يتقي الخطوب بواقي % % 20(@)(@@) % و عريق في الأزد يمسي ويضحي % % باسق الفرع طيب الأعراق % PageV01P626 21(@)(@@) % تخضب الكف بالمدامو طورا % تخضب الكف من دم مهراق % 22(@)(@@) % أنفقت عزمه التجاربحتى % % تركته مهذب الأخلاق % 23(@)(@@) % قد لعمري زفت إليك من المد % % ح عذارى على علاك بواقي % % 24(@)(@@) % من ولي يسير في طرق الود % دو لا يهتدي لطرق النفاق % 25(@)(@@) % فإذا ما امتحنته في القوافي % % صاغ حليا يفوق حلي الحقاق 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms149# % 26(@)(@@) % عطرته علاك حتى لخلنا % % أن فيه نسيم مسك فتاق % 27(@)(@@) % و أرى الدر ليس يحسن إلا % في حسان النحور والأعناق % 28(@)(@@) % لست ممن يغير جهلا على الشع % % رو يربي في الأخذ والإنفاق % 29(@)(@@) % بنظام واهي القوى مستحيل % لم يرضه رياضة الحذاق % 30(@)(@@) % و إذا ما حباك منه عروسا % باعها بعد عرسها بطلاق % PageV01P627 البحر : - 1(@)(@@) % ليس التجلد شيمة العشاق % إلا إذا شيب الهوى بنفاق % 2(@)(@@) % عد بالمدام على سليم زمانه ؛ % إن المدام له من الدرياق % 3(@)(@@) % بكرا أضاف إلى محاسن خلقها % % قرع المزاج محاسن الأخلاق % 4(@)(@@) % و أعوذ من شرق البلاد بغربها % % فأؤوب من وصب إلى إخفاق % 5(@)(@@) % مثل الهلال أغذ شهرا كاملا % فرماه آخر شهره بمحاق % 6(@)(@@) % سفر رجوت به النهاية في الغنى % % فبلغت منه نهاية الإملاق % 7(@)(@@) % و لكم طلعت على الشآمفنفست % شيم الأمير التغلبي خناقي % % 8(@)(@@) % جددت أخلاق المكارم بعدما % % أشفت خلائقها على الإخلاق % 9(@)(@@) % و فعلت في نوب الحوادث مثل ما % % فعلت ظباك بمعشر مزاق % 10(@)(@@) % و ملكت بالمنن الرقابو إنما % % منن الملوك جوامع الأعناق % PageV01P628 11(@)(@@) % المجدما سلمت خلالكسالم % و الجودما بقيت يمينكباقي % % 12(@)(@@) % علمتني النظر المديد إلى العلى % % من بعد ما ألف العدا إطراقي % % 13(@)(@@) % فكأنما أسطو لشزر لواحظي % % بظبا على كيد العدو رقاق % 14(@)(@@) % فلأجلبن إليك كل غريبة % تضحى الكرام لها من العشاق % PageV01P629 البحر : - 1(@)(@@) % و ريم رمتني ألحاظه % % فبت أسيرا لها موثقا % % 2(@)(@@) % كأن الشقائق والياسمين % على خدهخجلا شققا % % 3(@)(@@) % و قالوابمقلته زرقة % تشينفظل لها مطرقا % % 4(@)(@@) % و هل يقطع السيف يوم الوغى % % إذا لم يكن متنه أزرقا % % PageV01P630 البحر : - 1(@)(@@) % إذا شئت أن تجتاح حقا بباطل % و تغرق خصما كان غير غريق % 2(@)(@@) % فسائل أبا بكر تجد منه مسلكا % إلى ظلمات الظلمكل طريق % 3(@)(@@) % و لاطفه بالشهد المخلق وجهه % % و إن كان بالألطاف غير خليق % 4(@)(@@) % بأحمر مبيض الزجاج كأنه % رداء عروس مشرب بخلوق % 5(@)(@@) % له في الحشا برد الوصال و طيبه % و إن كان يلقاه بلون حريق % 6(@)(@@) % كأن بياض اللوز في جنباته % كواكب لاحت في سماء عقيق % PageV01P631 البحر : - 1(@)(@@) % حلفت عنك يمينا غير صادقة % و لست خلا لمن أوفى و لا صدقا % % 2(@)(@@) % كأنهاحين فل الحق باطلها % % قطع من الليل غطى سجفه 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms150# الفلقا % % 3(@)(@@) % حديدة في نواحي السمع يحسبها % % موسى الصناعإذا أمضيته حلقا % % 4(@)(@@) % فإن قرفت يمينا بعدها أبدا % فلا وقيت صروف الدهر والغرقا % % PageV01P632 البحر : - 1(@)(@@) % يكفيك أن قنافا راعه غضبي % % قبل الهجاءفلاقى الحين من فرق % 2(@)(@@) % لو أن قمل قناف ثلة رتعت % ليلا من النقع يمحو غرة الفلق % 3(@)(@@) % يا قاتل الفأر حتى ما يحسهم % أهل المنازل في صبح ولا غسق % 4(@)(@@) % قد كان لي وطر في الشعر أخلقه % ما جال في أذني من شعرك الخلق % 5(@)(@@) % ليس القريض دوا للفأر تحمله % % من الشوارع والأسواق في طبق % 6(@)(@@) % سرقت شعري وكردوس أخوك فقد % % شهرتما عند كل الناس بالسرق % PageV01P633 البحر : - 1(@)(@@) % لله حسان فتى معرقا % في حذقهو ابن فتى معرق % 2(@)(@@) % يفتك بالمرء شفيقا به % % أعجب به من فاتك مشفق % 3(@)(@@) % له حسام مطلق حده % % يدمى و طورا ليس بالمطلق % 4(@)(@@) % إذا كسا الوجه به رونقا % عاد إلى سن له ضيق % PageV01P634 البحر : - 1(@)(@@) % لا راح ما لم يصفها الراووق % رحب الذرى ينحط فيه الضيق % 2(@)(@@) % سماء لاذ قطرها رحيق % تألفت من مزنه البروق % 3(@)(@@) % يسقيك من سحابه الإبريق % ماء عقيق لو جرى العقيق % 4(@)(@@) % راح تولى سبكها التعتيق % عتقهامن عمر الزرنوق % 5(@)(@@) % حتى إذا ألهبها التصفيق % صحنا إلى جيراننا الحريق % PageV01P635 البحر : - 1(@)(@@) % حمراء لم تكذب ولم تصدق % لها لسان قط لم ينطق % 2(@)(@@) % يفرقها العالملكنها % % قط من العالم لم تفرق % 3(@)(@@) % يزهر في ذي أربع مقعد % كالشمسإذ تزهر في المشرق % PageV01P636 البحر : - 1(@)(@@) % أي قواف يعز مونقها % % فيسترق القلوب ريقها % % 2(@)(@@) % مصونة و الخطوب تبذلها % % أحسنها صنعة وأرشقها % % 3(@)(@@) % و كان جود الكرام ينبتها % % فصار منع اللئام يحرقها % % 4(@)(@@) % سيروا إلى المجد قبل سائرة % أطلق منها السباو أطلقها % % 5(@)(@@) % إن أكسكم من مدائحي جننا % فإن لي أسهما تمزقها % % 6(@)(@@) % شواردا في البلاد ما افترقت % إلا رأيت اللبيب يفرقها % % 7(@)(@@) % أما ابن فهد فقد وردت له % % مواردا لم يكن يرنقها % % 8(@)(@@) % صنائع تنشىء المحامد كالأ % % نوار راح الحياء يفتقها % % 9(@)(@@) % فسائلاهالغداة كيف سلا % % عن القوافيو كان يعشقها % % 10(@)(@@) % فكلما عارضته سافرة % أعرض عنهاو كان يرمقها % % PageV01P637 11(@)(@@) % غرائب سامها الجفاءو ما % % زال جفاء الكريم يقلقها % % 12(@)(@@) % و لست أحبو بها سواهو لا % % أذبل ديباجها وأخلقها % % 13(@)(@@) % فسوف أستشعر 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms151# الجميل من الص % بر عسى الله منه يرزقها % % PageV01P638 البحر : - 1(@)(@@) % طوى الشوقلولا بارق يتألق % و طيف بأسباب الكرى يتعلق % 2(@)(@@) % و أملقه وشك الفراقفدمعه % % طريد هوى في صفحة الخد يعلق % 3(@)(@@) % وقفنا وتذراف الدموع خليقة % طبعنا عليهاو العزاء تخلق % 4(@)(@@) % و لما اعتنقنا خلت أن قلوبنا % % تناجى بأفعال النوى و هي تخفق % 5(@)(@@) % هي الدار لم يخل الغمام ولا الهوى % % معالمها من عبرة تترقرق % 6(@)(@@) % لوى عنقي عنها المشيبو قد أرى % % جنيب الصبا فيها أخب وأعنق % 7(@)(@@) % أقولو قد راق العيون بهاؤها % % سقتك السحاب الغر مما تروق % 8(@)(@@) % فلا عيش إلا ما أفاد بها الصبا ؛ % و لا وجد إلا ما أفاد التفرق % 9(@)(@@) % و موسومة كاساتها بفوارس % من الفرس تطفو في المدام وتغرق % 10(@)(@@) % أقبل منهم كل شاك سلاحه % % و في يده سهم إلي مفوق % PageV01P639 11(@)(@@) % كأن الحباب المستدير قلادة % عليهو توريد المدامة يلمق % 12(@)(@@) % أحن إليهاو الظلام ممسك % و أصدف عنهاو الصباح مخلق % 13(@)(@@) % و لو لم أكن جار الأمير لكان لي % % أديم بظفر النائبات ممزق % 14(@)(@@) % بجود أبي الهيجاء ألبست نعمة % مجددة تصفو علي وتشرق % 15(@)(@@) % قطعت لها في الأرض عقل مدائح % تغرب في أقطارها وتشرق % 16(@)(@@) % فلا هو مسبوقا إلى غاية الندى ؛ % و لا أنا في شأو المحامد أسبق % 17(@)(@@) % غمام متى تخفق لساريه راية % على الأرضلا يقلع وفي الأرض مخفق % 18(@)(@@) % رفيق إذا الجاني استجار بعفوه % % و لكنه بالقرن لا يترفق % 19(@)(@@) % حوت تغلب سيفا بهو حوى بها % % كسمراء يمضيها سنان مذلق % 20(@)(@@) % و يوم كأن الشمس فيه مريضة % مرنقة ألحاظها حين ترمق % PageV01P640 21(@)(@@) % إذا اسود فيه النقعأو مضت الظبا % % فغودر من إيماضهاو هو أبلق % 22(@)(@@) % كأن عتاق الخيل تنقص ما التقت % بقطريه أو تزداد حين تفرق % 23(@)(@@) % توردتهو الحلم تحت رواقه % % أسير الحفاظ المرو الجهل مطلق % 24(@)(@@) % فجليت من ظلمائهو هو حالك % و وسعت من أرجائهو هو ضيق % 25(@)(@@) % بضرب كشق الأقحمي ترى له % % جيوب العذارى في الخدود تمزق % 26(@)(@@) % و طوقت قوما في الركاب صنائعا % كأنهم منها الحمام المطوق % 27(@)(@@) % غرست بها غرسا يحييك زهره % % و يدنيك من أثمارهو هو مونق % 28(@)(@@) % أتتكو قد أعدت خلالك لفظها % % خلالا ففيه من خلالك رونق 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms152# % 29(@)(@@) % معان كأنفاس الرياح بسحرة % تمر بنوار الرياض فتعبق % 30(@)(@@) % يقصر عنها خاطب و هو مصقع ؛ % و يعجز عنها شاعر وهو مفلق % PageV01P641 البحر : - 1(@)(@@) % قد أظلتك يا أبا إسحاق % غارة اللفظ والمعاني الدقاق % 2(@)(@@) % و أتاك الهمام ذو النظر الشز % ر إليهاو الصل ذو الإطراق % 3(@)(@@) % قطرة لو يجفمن قطربي % درست بعدها رسوم الشقاق % 4(@)(@@) % فاتخذ معقلا لشعرك تحمي % % ه مروق الخوارج المراق % 5(@)(@@) % قبل رقراقة الحديد يريق % السم في صفو مائه الرقراق % 6(@)(@@) % كنت من ثروة القريض محلى % % فتخليت منه بالإملاق % 7(@)(@@) % أيها الجفن غير دمعك هدا % % إن ثكل الحبيب غير الفراق % 8(@)(@@) % أغداة الكلاب أودت بشعري % % فمضى أو عشية التحلاق % 9(@)(@@) % غارة لم تكن بسمر العوالي % % حين شنت ولا السيوف الرقاق % 10(@)(@@) % جال فرسانها علي جلوسا % لا أقلتهم ظهور العتاق % PageV01P642 11(@)(@@) % فجعت أنفس الملوكأبا الهي % جاءحربا بأنفس الأعلاق % 12(@)(@@) % بقواف مثل الرياض تمشت % بين أنوارها مياه السواقي % % 13(@)(@@) % و معان فتقتهنفأصبح % ن لمسك الكلام مثل الفتاق % 14(@)(@@) % بدع كالسيوف أرهقن حسنا % و سقاهن رونق الطبع ساقي % % 15(@)(@@) % مشرقات تريكلفظا ومعنى % حمرة الحلي في بياض التراقي % % 16(@)(@@) % يا لها غارة تفرق في الحو % % مة بين الحمام والأطواق % 17(@)(@@) % تسم الفارس المقدم بالعا % % رو بعض الإقدام عار باقي % % 18(@)(@@) % لو رأيت القريض يرعد منها % % بين ذاك الإرعاد والإبراق % 19(@)(@@) % و قلوب الكلام تخفق رعبا % تحت ثنيي لوائها الخفاق % 20(@)(@@) % و سيوف الضلال تفتك فيها % % بعذارى الطروس والأوراق % PageV01P643 21(@)(@@) % و الوجوه الرقاق دامية الأب % شار في معرك الوجوه الصفاق % 22(@)(@@) % لتنفست رحمة الخدود الحم % % ر منهنو القدود الرشاق % 23(@)(@@) % و الرياض التي ألح عليها % % كاذب الوبل صادق الإحراق % 24(@)(@@) % و النجوم التي تظل نجوم ال % % جو حسادها على الإشراق % 25(@)(@@) % بعد ما لحن في سماء المعالي % % طلعا و انتشرن في الأفاق % 26(@)(@@) % و تخيرت حليهنفلم تع % % د خيار النحور والأعناق % 27(@)(@@) % و قطعت الشباب فيه إلى أن % % هم برد الشباب بالإخلاق % 28(@)(@@) % فهي مثل المدام بين صفاء % و بهاء ونفحة ومذاق % 29(@)(@@) % منطق يخجل الربيع إذا حل % % ل عليه السحاب عقد النطاق % 30(@)(@@) % عربي روائح الشيح والقي % % صوم منه والشث والطباق % PageV01P644 31(@)(@@) % سائل من شعاب وجرةثاو % بين أجراعها وبين البراق % 32(@)(@@) % فهو ما شئت من 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms153# هدير قروم ؛ % و هو ما شئت من حنين نياق % 33(@)(@@) % يا هلال الآدابياابن هلال % صرف الله عنك صرف المحاق % 34(@)(@@) % أنت من تسهل المعالي عليه % % و هي في معشر صعاب المراقي % % 35(@)(@@) % سلعة ما لمن يحاول حرز % حية ما لمن يساور راقي % % 36(@)(@@) % سوف أهدي إليك من خدم المج % د إماء تعاف قبح الإباق % 37(@)(@@) % كل مطبوعة على اسمكباد % وسمها في الجباه والآماق % 38(@)(@@) % صادقات الوداد تصدق فيها % % ألسن الحمد وافيات الصداق % 39(@)(@@) % إننيو العدا على الدهر شرب % نتساقى الردى بكأس دهاق % 40(@)(@@) % لو تلاقت دماؤنا في مقام % لتفرقن عنه بعد التلاقي % % PageV01P645 41(@)(@@) % و هي أوتارنا القديمة لا تخ % % رج أوتارنا من الأفواق % 42(@)(@@) % ليس فيها إلا ضراب الهوادي % % و طعان النحور والأحداق % 43(@)(@@) % أو ترى غير ما رأيتفإني % % صافح عن مموه مخراق % 44(@)(@@) % زور الشعر والشبابفأضحى % % خلق الوجه مظلم الأخلاق % 45(@)(@@) % كادني مغرقا و رب غريق % خاض للكيد لجة الإغراق % 46(@)(@@) % و إذا كاشف العدوفأبدى ال % % غمرأو دب في ظلام النفاق % 47(@)(@@) % فأنا الغيظ في صدور الأعادي % % و شجاها المقيم في الأحلاق % PageV01P646 البحر : - 1(@)(@@) % فؤاد علي بالسماح علوق % و بشر علي بالسماح يروق % 2(@)(@@) % فمن كان أضحى للمكارم صاحبا % فأنت لها يا بن الحسين شقيق % 3(@)(@@) % طرقتك ممتاحا و ليس لطارق % يرومك من وقع الضريب طريق % 4(@)(@@) % جنوب تحث المزن حثا وشمأل % يعبس منه الوجهو هو طليق % 5(@)(@@) % و حر حريق ألبس الأرض ثوبه % % يخاف على الأقدام منه حريق % 6(@)(@@) % تثير الصبا في الجو منه عجاجة % كما انتشر الكافورو هو سحيق % 7(@)(@@) % فقد هجر الخل الوصول خليله % % و لم يحظ فيه بالصديق صديق % 8(@)(@@) % و عاد خفيف الفرضو هو منفل % عليو رق الدينو هو صفيق % 9(@)(@@) % و ما انفل حد القر إلا بقهوة % ترقرق في كاساتها رقريق % % 10(@)(@@) % إذا لبست أثوابهافعقيقة ؛ % و إن نشرت أنفاسها فخلوق % PageV01P647 11(@)(@@) % تدور علينا كأسها في غلائل % رقاق ترد العيش وهو رقيق % 12(@)(@@) % وإني خليق من نداك بنيلها ؛ % و أنت بما أوليت منك خليق % PageV01P648 البحر : - 1(@)(@@) % طرقنا أبا عامر موهنا % و مازال يحظى به الطارق % 2(@)(@@) % و قد سفر الأفق عن شدة % لسان السماء بها ناطق % 3(@)(@@) % و أومض برق كما أومضت % يد البكر 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms154# زينها البارق % 4(@)(@@) % و هبت جليدية قرة % رذاذا و أسلمها دايق % 5(@)(@@) % ترى أزر القوم في مرها % % شوارد ليس لها عائق % 6(@)(@@) % إذا استدبرت وانيا في السرى % % رأيناهو هو بها سابق % 7(@)(@@) % فلما تهلل من وجهه % % هلال ومن بشره بارق % 8(@)(@@) % أحطنا لديه بذي أربع % من الصفر أبدعه حاذق % 9(@)(@@) % كأن ذوائبتهإذ علت % لواء على جمرة خافق % 10(@)(@@) % يخيل لي حر أنفاسه % % و صفرته أنه عاشق % PageV01P649 البحر : - 1(@)(@@) % لي منزل كوجار الضب أنزله % % ضنك تقارب قطراهفقد ضاقا % % 2(@)(@@) % أراه قالب جسمي حين أدخله % % فما أمد به رجلا و لا ساقا % % 3(@)(@@) % فلست أعتده رزقا أسر به % % و هل تعد سجون الناس أرزاقا % % 4(@)(@@) % أناشد الغيث أن يجتازه أبدا % و لامع البرق أن يغشاه إحراقا % % PageV01P650 البحر : - 1(@)(@@) % عش مدى الدهريا أبا إسحاق % و وقاك الخطوبما عشتو اق % % 2(@)(@@) % فلقد أطلقت يمينك جودا % كان من قبل موثقا بوثاق % 3(@)(@@) % إن دارا تضم أخلاقك الغر % لدار الجنان غير اختلاق % 4(@)(@@) % منزل كالربيع حلت عليه % % حاليات السحاب عقد النطاق % 5(@)(@@) % يمتع الطرف من طرائف حسن % يتجافى بها عن الإطراق % 6(@)(@@) % بين ساج كأنه ذائب التب % ر على مثل ذائب الأوراق % 7(@)(@@) % و عذارى كأنهن من الحس % % نعذارى سفرن للعشاق % 8(@)(@@) % تتلاقى رؤوسها لتدان % و تناءى جسومها لافتراق % 9(@)(@@) % حليت من ثمارهافتراءت % حاليات النحور والأعناق % 10(@)(@@) % تخرق المزن والتراب إلى الما % % ء بتلك الفروع والأعراق % PageV01P651 11(@)(@@) % فلماء البحورإذ رسخت في % % هو ماء الغمام فيه تلاقي % % 12(@)(@@) % كيف قابلتها أرتك رياضا % و سماء مخضرة الآفاق % 13(@)(@@) % ينثر الريح حليهافتراه % % نهب أيدي العفاة والطر اق % 14(@)(@@) % بدع لو تحققت ببقاء % كن أولى من الحلى بالحقاق % 15(@)(@@) % و إذا كانت الجواهر للزي % % نة كانت جواهر الأرزاق % 16(@)(@@) % فكأن الطلع النضيد جفون % يتصدعن عن سيوف رقاق % 17(@)(@@) % صنعت فوقها التماثيل أيد % عاجزات عن صنعة الخلاق % 18(@)(@@) % من وجوه مثل البدور صباح % و قدود مثل الغصون رشاق % 19(@)(@@) % ألبستها محاسن الخلق لما % % عجزت عن محاسن الخلاق % 20(@)(@@) % فإذا ما الرياح حركن منها % % خيلت أن خيلها في استباق % PageV01P652 21(@)(@@) % و تراءت أسودها واثبات % مبديات خناجر الأشداق % 22(@)(@@) % يغتدي بينها الفهود على الغز % % لان خزر العيون سود المآقي % % 23(@)(@@) % حيوان بلا حياة فمنه % % حائد عن منية 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms155# وملاقي % % 24(@)(@@) % وقيان منعن أسماعنا الحظ % ظ ووفرنه على الأحداق % 25(@)(@@) % و رياض لم ينش زهرتها التر % % بو لم يسقها من الغيث ساقي % % 26(@)(@@) % فتمل السرورما عشت فيه % % باصطباح من لذة واغتباق % 27(@)(@@) % و ثناء زفت إليك عذارا % % هفليست مروعة بطلاق % PageV01P653 البحر : - 1(@)(@@) % أذم إليك عادية الفراق % و أحمد سائح الدمع المراق % 2(@)(@@) % أمنت الكاشحين فأسلمته % لذكراك الشؤون إلى المآقي % % 3(@)(@@) % و لم أملك غراما في اتئاد % يؤرقنيو دمعا في استباق % 4(@)(@@) % و كيف أرد أنفاسا حرارا % لو ارتدت لأحرقت التراقي % % 5(@)(@@) % أروم دنو كاذبة التداني % % من العشاق صادقة الفراق % 6(@)(@@) % ألم خيالهاو العيس حسرى % % مرافقها وسائد للرفاق % 7(@)(@@) % فبتناو العقود لها انبتات % على الأعناق من ضيق العناق % 8(@)(@@) % و راح يستحث بها ضريب % على راح يخيل في احتراق % 9(@)(@@) % سلبناها الزقاقو نحن أولى % % بما تحوي الزقاق من الزقاق % 10(@)(@@) % بمتسق كأن الشمس تجلو % % علينا منه حليا في اتساق % PageV01P654 11(@)(@@) % له أرج يحيي السرب وهنا % بأنفاس مطيبة رقاق % 12(@)(@@) % و أغصان تقولإذا تثنت % أخمرا ما سقتهن السواقي % % 13(@)(@@) % هل الأيام مطلقة وثاقي % % فأرحل أم منفسة خناقي % % 14(@)(@@) % و هل بالشام لي وجه ارتياد % أقيم عليهأم وجه انطلاق % 15(@)(@@) % علقتفما وهت كفيو لكن % وهى عن قبضها حبل اعتلاقي % % 16(@)(@@) % و أكثر ماأقولسقى ابن فهد % حيا كنداه منحل النطاق % 17(@)(@@) % رماني بامتهان فل غربي % % و أطمع كل وغد في لحاقي % % 18(@)(@@) % و أسرف في الوداد على التنائي % % فحين دنوت أسرف في الشقاق % 19(@)(@@) % و سرت فكنت بدر التم أوفى % % به طول المسير على المحاق % 20(@)(@@) % و لي منه إذا ما الكأس دارت % عرابد لا يقي منهن واق % % PageV01P655 21(@)(@@) % تساورنيفألقاها برفق % كما يلقى فحيح الرقش راق % % 22(@)(@@) % تصم صداي عن نغم المثاني % % و تشرقني بما في كف ساق % 23(@)(@@) % ستبعدني اللواتي قربتني % % و إن لم تطف نايرة أساقي % % 24(@)(@@) % و تجدبنيإذا ما الشام ضاقت % علي رحابهرحب العراق % 25(@)(@@) % على أني أفارق عن وداد % مقيم في حمى الأحشاء باقي % % 26(@)(@@) % و أذكر حبلك الثبت الأواخي % % عليو ودك العذب المذاق % 27(@)(@@) % و أبقى غير مستبق دموعا % تفيضو لا تغيض على الإباق % 28(@)(@@) % و كم عبد تذكر فعل مولى % % فحن إلى سجاياه الرقاق % 29(@)(@@) % سلام الله منك على جواد 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms156# % إذا جارى حوى قصب السباق % 30(@)(@@) % سما للمجد مبيض الأيادي % % فسيح الظل ممتد الرواق % PageV01P656 31(@)(@@) % فلم تبعد عليه له أقاص % و لم تصعب عليه له مراقي % % 32(@)(@@) % وقفت عليه ودا مستكنا % تمكن في الشغاف وفي الصفاق % % 33(@)(@@) % و شكرا ما حدا الأظعان حاد % و ما أخذ الطريق من الطراق % 34(@)(@@) % و حسبيمن مباشرة الأماني % % صبوحي من لقائكو اغتباقي % % PageV01P657 البحر : - 1(@)(@@) % يا دار يوسف لا عدتك تحية % للمزن بين رواعد وبوارق % 2(@)(@@) % غراء ضاحكة إليك ثغورها % % ضحك الحبيب إلى المحب الوامق % 3(@)(@@) % سقيا لتلك منازلا معمورة % من بين مطروق الفناء وطارق % 4(@)(@@) % حمر القواعد والقبابكأنما % % أشربن رقراق الخلوق الرائق % 5(@)(@@) % يلقاك من نوارها وغيومها % % ما بين دكن مطارف ونمارق % 6(@)(@@) % و الهيكل المبيض يلمع وسطها % % كالأقحوانة في بساط شقائق % 7(@)(@@) % كم دمية خرساء فيهو دمية % فضلت عليها باللسان الناطق % 8(@)(@@) % من أهيف تيجانه من شعره % % فكأنما هو شارق من غاسق % 9(@)(@@) % و مهفهف لو كنت أملك أمره % % بدلت سحم مسوحه بقراطق % 10(@)(@@) % كم قد رمقت به المنى فغشيتها % % ما بين مرموق الجمال ورامق % PageV01P658 11(@)(@@) % و معذل أخذ الصبا بيمينه % % فجرى به جري الجموح السابق % 12(@)(@@) % و رقدت عن غزلانه وذئابه % ما بين مسروق الوصال وسارق % 13(@)(@@) % أيام كنتإذا ادلهم ظلامه % % أهدى إليه من الخيال الطارق % 14(@)(@@) % عصرا لبست ظلالهو كأنه % % في ظلمة الأيام غرة شارق % PageV01P659 البحر : - 1(@)(@@) % وجد الحب لي فؤادا علوقا % فأفيقافلست منه مفيقا % % 2(@)(@@) % وقفتنا النوى على الكره منا % % موقفا ضم شائقا ومشوقا % % 3(@)(@@) % حال ورد الخدود فيهفأضحى % % النرجس الغض في الدموع غريقا % % 4(@)(@@) % لوعة أفرطت فعادت حريقا % و حنين أربى فعاد شهيقا % % 5(@)(@@) % و خليق بلوعة الحب صب % لم يكن بالعزاء فيه خليقا % % 6(@)(@@) % فأراه في مسلك الحب رحبا % و أراه في مسلك الصبر ضيقا % % 7(@)(@@) % بأبي أنتلا عدمت الهوى في % % كعنيفا في بطشهأو رفيقا % % 8(@)(@@) % لست أنسى اهتزاز عطفك لما % % هز منك العناق غصنا رشيقا % % 9(@)(@@) % كل بر يشوبه كدر المط % ل حقيق بأن يكون عقوقا % % 10(@)(@@) % و إذا المن جاء بالمن فالمر % % زوق منه من لم يكن مرزوقا % % PageV01P660 11(@)(@@) % لو أراقت دمي صروف الليالي % % لم تجدني لماء وجهي مريقا % % 12(@)(@@) % قد وجدنا لأحمد بن سليما % % ن يدا 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms157# ثرة ووجها طليقا % % 13(@)(@@) % و سجايا رقت نسيما فراحت % % تخجل الراح والنسيم الرقيقا % % 14(@)(@@) % مفرد في السماح أضحى فريقا % في معاليهو الأنام فريقا % % 15(@)(@@) % كل يوم يريك فعلا جليلا % في ابتذال اللهى و معنى دقيقا % % 16(@)(@@) % قد جرى نيلهفكان غماما % و مضى عزمهفكان حريقا % % 17(@)(@@) % و أضاءت فيه مخايل بشر % كن للغيثمن نداهبروقا % % 18(@)(@@) % جمعت شمل مجده نفحات % فرقت شمل ماله تفريقا % % 19(@)(@@) % فأعادت ورد المطالب عذبا ؛ % و أعادت روض العطايا أنيقا % % 20(@)(@@) % فإذا الطارق انتحاه رأى من % % كل وجهإلى نداهطريقا % % PageV01P661 21(@)(@@) % عاق من يرتجي لحاقك عجز % عن معال تجاوز العيوقا % % 22(@)(@@) % و انثنى الحاسدون عن سابق من % % ك إلى المجد أن يرى مسبوقا % % 23(@)(@@) % و أفاق العذول عن أريحي % ليس من نشوة الندى مستفيقا % % 24(@)(@@) % خلق طاب في المشاهد حتى % % عطل المسك نشره والخلوقا % % 25(@)(@@) % بعريق في الأزد طاب أصولا % في صعيد العلى وطاب طروقا % % 26(@)(@@) % و عتيق النجار ماض وهل يم % % ضي شبا السيف أو يكون عتيقا % % 27(@)(@@) % نسب ألبست به الشمس نورا % أو أعير الصباح منه شروقا % % 28(@)(@@) % فنظمنا من الثناء عقودا % يخجل الدر نظمهاو العقيقا % % 29(@)(@@) % بين أثنائها بدائع تحكي % % بدع الروض نمقت تنميقا % % 30(@)(@@) % و معان لو جلن في أذن العا % % شق أنساه حسنها المعشوقا % % PageV01P662 31(@)(@@) % فاصطنع مادحا يحقق في مد % % حكإذ كنت بالمديح حقيقا % % 32(@)(@@) % وبق في نعمة تسوء عدوا % كامن الحقد أو تسر صديقا % % PageV01P663 البحر : - 1(@)(@@) % و باكر لغيره ما يرزق % مثر به طورا و طورا مخفق % 2(@)(@@) % يغدوو جلباب الظلام أورق % و الأفق لا جون ولا مخلق % 3(@)(@@) % يهلهل الصنعةو هو موثق % يلحق في الماء التي لا تلحق % 4(@)(@@) % و يرمق الشخص الذي لا يرمق % و هل يفوت لحظه أو يسبق % 5(@)(@@) % و كله نواظر لا تطرق % حتى إذا نم عليه الفلق % 6(@)(@@) % و ضمه صافي الحمام أزرق % أحشاؤه من غير ريب تبرق % 7(@)(@@) % تمرقوالحين عليها مطبق % أحداقه سور عليها محدق % 8(@)(@@) % جاء بأمثال المدى تألق % و مثل أنصاف السيوف تبرق % PageV01P664 البحر : - 1(@)(@@) % ترى به الجمر إذا ما صفا % % يشرق مثل الذهب المشرق % 2(@)(@@) % جمرته تشرق من عبرتي % % و حره من قلبي المغلق % 3(@)(@@) % إذا بدا نحوك شبهتهحبابك الله عاشقيك فقد أصبحت ريحانة 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms158# لمن عشقا % % بقهوة في قدح أزرقسقط بيت من ص % % PageV01P665 البحر : - 1(@)(@@) % أيا من رأى البدر بدر السماء % يروح ويغدو إلى سوقه % % 2(@)(@@) % إذا مزق الثوب مقراضه % % تمزق قلبي كتمزيقه % % 3(@)(@@) % و أطيب من روح ريح الجنان % خطوط تروين من ريقه % % PageV01P666 البحر : - 1(@)(@@) % ومنتبه يسعى إلي بكأسه % % و قد كاد ضوء الصبح بالليل يفتك % 2(@)(@@) % و قد حجب الغيم السماء كأنما % % يزر عليها منه ثوب ممسك % 3(@)(@@) % ظللنا نبث الوجدو الكأس دائر % و نهتك أستار الهوى فتهتك % 4(@)(@@) % فمجلسنا في الماء يهوي ويرتقي % % و إبريقنا في الكأس يبكي ويضحك % PageV01P667 البحر : - 1(@)(@@) % عقبى دوائك صحة تغشاكا % % و سلامة تشجي قلوب عداكا % % 2(@)(@@) % و سحاب عافية يعمك وبلها % % سعةكما عم العفاة نداكا % % 3(@)(@@) % داويت جسما طالما داوى الهدى % % تحت العجاجو أمرض الإشراكا % % 4(@)(@@) % و أخذت كأسكو الشفاء قرينها % % فلو استطاع تحية حياكا % % 5(@)(@@) % أترى الذي داواك يعلم أنه % داوى الغمام الجودإذ داواكا % % 6(@)(@@) % الله حاط بك الثغور وأهلها % % و رآك واقية الهدى فوقاكا % % 7(@)(@@) % فخرجت من غمائه متوقدا % طلقا بحلي الحادثات سناكا % % 8(@)(@@) % أنى يصفيك الدواء وشربه % % و تورد الغمرات قد صفاكا % % 9(@)(@@) % و متى شكت أعضاء جسمك علة % فدواؤهن قراعك الفتاكا % % 10(@)(@@) % يا سيف دين الله ما استحيا الحيا % % إلا إذا جاراكأو ناواكا % % PageV01P668 11(@)(@@) % لا زلت لابس نعمة فضفاضة % يهتز لا كبرا بها عطفاكا % % 12(@)(@@) % و الله يوليك السلامة نعمة % و يجيب فيك دعاء من والاكا % % PageV01P669 البحر : - 1(@)(@@) % و فتية دارت السعود بهم % % فدار للراح بينهم فلك % 2(@)(@@) % بتناو ضوء الكؤوس يهتك بالإ % % شراق ستر الدجى فينهتك % 3(@)(@@) % نرى الثرياو البدر في قرن % كما يحيا بنرجس ملك % PageV01P670 البحر : - 1(@)(@@) % قضب الهند والقنا أخدانك % % و المقادير في العدا أعوانك % 2(@)(@@) % و المعالي رياض طرفكو الحم % % دإذا راق زهرهريحانك % % 3(@)(@@) % ضحك المجد في زمانكعلما % أن سيوطيه ما أحب زمانك % % 4(@)(@@) % أيها ذا الأمير ما رمدت عي % % ناكحاشا لها ولا أجفانك % 5(@)(@@) % بل حكت فعلك الكريم ليضحى % % شأنها في العلى سواء وشأنك % % 6(@)(@@) % فهي تحمر مثل سيفك في الرو % عو تصفو كما صفا إحسانك % % PageV01P671 البحر : - 1(@)(@@) % رضا المتجني غاية ليس تدرك % و في كل وجه للتجرم مسلك % 2(@)(@@) % إذا صاحب عني تولى تركته % % على طبعه 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms159# في العذرفالعذر أملك % 3(@)(@@) % وصلتك لما كنت في موحدا % و عزيت فيك القلب إذ أنت مشرك % PageV01P672 البحر : - 1(@)(@@) % تأبى الصبابة أن تصيخ لعاذل % % أو أن تكف غروب دمع هامل % 2(@)(@@) % عرف المنازل باللوى فبكى دما ؛ % إن الهوى فيه اختلاف منازل % 3(@)(@@) % و متى رأى آثار حي نازح % حياو قالسقيت أوبة راحل % 4(@)(@@) % لا يستفيق كأن نفثة نابل % بكرت عليهأو سلافة بابل % 5(@)(@@) % و سبيله أن يستبلو قد رأى % % شمل الشباب طريد شيب زائل % 6(@)(@@) % لقي العواذل عاطلا من حلمه % % فصددن عن حالي المفارق عاطل % 7(@)(@@) % حييت من طلل أجاب دثوره % يوم العقيقسؤال دمع سائل % 8(@)(@@) % نحفى و ننزلو هو أعظم حرمة % من أن يذال براكب أو ناعل % 9(@)(@@) % ما كان أعذب مجتناهو أهله % % بين العذيب وبين رقة عاقل % 10(@)(@@) % و مرادنا ما بين أبيض صارم % يهتز منهو بين أسمر ذابل % PageV01P673 11(@)(@@) % أسلاسل البرق الذي لحظ الثرى % % وهنا فوشح روضه بسلاسل % 12(@)(@@) % أذكرتنا النشوات في ظل الصبا % % و العيش في سنة الزمان الغافل % 13(@)(@@) % أيام أستر صبوتي من كاشح % عمدا و أسرق لذتي من عاذل % 14(@)(@@) % هل يبلغن اللحظإن واصلته % % من ليس تبلغه تحية واصل % 15(@)(@@) % أكني عن البلد البعيد بغيره % % و أرد عنه عنان قلب مائل % 16(@)(@@) % و أود لو فعل الحيا بسهوله % % و حزونه فعل الأمير بآمل % 17(@)(@@) % الواهب الغيد الكواعب تغتدي % % مشفوعة لعفاته بصواهل % 18(@)(@@) % و الباذل النفس النفيسة للقنا % % كرما تجاوز فيه حد الباذل % 19(@)(@@) % إعناق عبد الله في طرق العلى % % و النحل تعتق فضله في الباطل % 20(@)(@@) % حمل المغارم والحمائل بعده % % و المجد حمل مغارم وحمايل % PageV01P674 21(@)(@@) % فالدهر يمسح منه غرة سابق % لاقاه أول سابقين أوائل % 22(@)(@@) % لما أبل تباشرت آمالنا % % بشرى العطاش رأين صفو مناهل % 23(@)(@@) % أو كالتلاع الحو آنس نورها % % إيماض طل للسحاب و وابل % 24(@)(@@) % من بعد ما فاضت عيون قبائل % حزنا عليهو غاض صبر قبائل % 25(@)(@@) % برء تداركناو نحن من الجوى % % غرقى فأوطأنا رقاب الساحل % 26(@)(@@) % وافى فكان السعد أول طالع % بطلوعه والنحس آخر آفل % 27(@)(@@) % أهمام وائل أنت أول سيد % تثنى بسؤدده خناصر وائل % 28(@)(@@) % و السيف سيف الله لم تعرف له % % في ملتقى الأبطال ضربة باطل % 29(@)(@@) % و الرمح أسرف 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms160# جائرا في جائر % طعنا و نكب عادلا عن عادل % 30(@)(@@) % و السهم لا يلقاه عند مروقه % % في الروعإلا متق بمقاتل % PageV01P675 31(@)(@@) % لا يفرغ الأعداء منكفإنهم % % بإزاء شغل في قراعكشاغل % 32(@)(@@) % نظرت معاقلهم إليكفلم يكن % % لما دلفت إليهمبمعاقل % 33(@)(@@) % ألحقت شاهقها المنيف بأرضها % % فكأنها صبحتها بزلازل % 34(@)(@@) % كم سطوة لك أخملت من نابه % و صنيعة لك نبهت من خامل % 35(@)(@@) % أبرئتإذ جاورت ربعك نازلا % فكأنني جار الربيع النازل % 36(@)(@@) % و سقيت من جدواك خمس سحائب % جادت علي بهن خمس أنامل % 37(@)(@@) % فتواصلت مدحي إليككأنها % % أفواف وشي اليمنة المتواصل % 38(@)(@@) % أنا فارس فيما أقول محقق % فاسمع مقالة فارس من راجل % 39(@)(@@) % و لرب تعريض لديك نجاحه % % جاءته تصريح الغمام الهاطل % 40(@)(@@) % و متى أنلت على القريض فإنني % % رب القريضو أنت رب النائل % PageV01P676 البحر : - 1(@)(@@) % هي الصوارم والخطية الذبل % و الحرب كاشرة أنيابها عصل % 2(@)(@@) % و الليث أصحر حتى لا حصون له % % و لا معاقل إلا البيض والأسل % 3(@)(@@) % و الروم تبذل ما رامت أسنته ؛ % و هل لهابالمنايا أقبلتقبل % 4(@)(@@) % منه الكتائب والريات موفية % على الخليجو منه الكتب والرسل % 5(@)(@@) % لله سيف تمنى السيف شيمته % % و دولة حسدتها فخرها الدول % 6(@)(@@) % و عاشق خيلاء الخيلمبتذل % نفسا تصان المعالي حين تبتذل % 7(@)(@@) % أشم تبدي الحصون الشم طاعته % % خوفا و يسلم من فيها ويرتحل % 8(@)(@@) % تشوقهو رماح الخط مشرعة % نجل الجراح بهالا الأعين النجل % 9(@)(@@) % كأنهو هجير الروع يلفحه % % نشوان مد عليه ظله الأصل % 10(@)(@@) % بدا فأبدى لمن عاداه صفحته % % كالنصل ليست تواري متنه الخلل % PageV01P677 11(@)(@@) % إقدام ذي نذر بالسيف معتصم % ما شان إقدامه كيد ولا حيل % 12(@)(@@) % جبال أعدائه بر يسيح به % % و برهلامتناععندهم جبل % 13(@)(@@) % فالصافنات حشاياهو إن قلقت % و السابغاتو إن أوهتله حلل % 14(@)(@@) % قاد الجيادله من وطئها صخب % على الصخورو من أرهاجها ظلل % 15(@)(@@) % يؤم خرشنة العليافيصبحها % % بالخيل تصهلو الرايات ترتجل % 16(@)(@@) % و حكم السيف فيها عادلا فغدت % % و أهلها جزر للسيف أو نفل % 17(@)(@@) % محمرة من دماء القوم مشعلة % سيان فيها المنايا الحمر والشعل % 18(@)(@@) % و حاذرته سمندوإثم ما وألت % إن الذي رابها بالسيف لا يئل % 19(@)(@@) % عذراء ما وطىء الإسلام تربتها % % و لا استباح حماها سيفه الفضل % 20(@)(@@) % ثنى العزيز 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms161# إليها ليث ملحمة % يسري العزيز بمسراهفينتقل % PageV01P678 21(@)(@@) % لولا قراعك لم يهو الصليبو لم % % يعل الأذان بها ما أطت الإبل % 22(@)(@@) % لما تمزقت الأغماد عن شعل % تمزقت عن سنا أقمارها الكلل % 23(@)(@@) % أكرم بسيفك فيها صائلا غزلا % يفري الشؤونو تفري غربه المقل % 24(@)(@@) % بجيث يشرب صدر السمهري دما % من الشغاف ويروى الفارس البطل % 25(@)(@@) % ثم انثنيت بخيل الله معلمة % سمر الرماح تثنى ثم تعتدل % 26(@)(@@) % ترف مجلبة الأقطار مسفرة % تكاد ما لحظتها الشمس تشتعل % 27(@)(@@) % مدت على السهل والأوعار قسطلها % % حتى تحير فيه الرأل والوعل % 28(@)(@@) % بحر من الجيش مسجور غواربه % % كأنما البحر في تياره وشل % 29(@)(@@) % حتى طلعت على طرسوس مبتسما % كما تبسم فيها العارض الهطل % 30(@)(@@) % و جدت جود طباع غير محتفل % يقصر الغيث عنهو هو محتفل % PageV01P679 31(@)(@@) % حتى إذا ضحكت تلك الربا وطمت % % تلك الوهادو راقت بينها الحلل % 32(@)(@@) % دعت يمينك بالمصيصة الجفلى % % حتى غدا المحل عنها وهو منجفل % 33(@)(@@) % سقاهم البحر ريا من أنامله % % فليس فيهم على جيحان متكل % 34(@)(@@) % و أصبح الشأم لو يسطيع مرتحلا % لألحقته بسيف الدولة الرحل % 35(@)(@@) % أتاك حتى استرق الحمد نائله % % و زاد حتى اطمأن الخائف الوجل % 36(@)(@@) % و جد عاذلهإذ جد في كرم % فكان أضيع شيء عنده العذل % 37(@)(@@) % هو الغمامفهل يثنى صواعقه % % أم هل تسد على شؤبوبه السبل % 38(@)(@@) % مستسلم لبني الآمال تالده % % فليس يعدوه من آمالهم أمل % 39(@)(@@) % مصغ إلى الحمد ما ينفك يطربه % % معنى تكدره الأفكارأو مثل % 40(@)(@@) % يصافح الروح من نشريهما أرج % كالريح صافحها الحوذان والنفل % PageV01P680 41(@)(@@) % حسب الأراقم إذ أنتم ذوائبها % % و هي الذوائب في الأحساب والقلل % 42(@)(@@) % هم زينوا أخريات الدهر مكرمة % و قبل زينت بهم أيامه الأول % PageV01P681 البحر : - 1(@)(@@) % أهجرا كان صدك أم ملالا % % و برا كان وصلك أم خيالا % % 2(@)(@@) % أكان فراقك المشجي زيالا % فآمل منك عطفا أم زوالا % % 3(@)(@@) % إذا ذكر العقيق لنا نثرنا % % عقيق الدمع سحا وانهمالا % 4(@)(@@) % طلول كلما حاولن سقيا % سقتها العين أدمعها سجالا % % 5(@)(@@) % تحن جمالنا صورا إليها % % فأحسبها ترى منها جمالا % % 6(@)(@@) % و نسأل من معالمها محيلا % فنطلب من إجابته محالا % % 7(@)(@@) % و كم خرق الصبا بذوي التصابي % % إلى خرس الحجول بها الحجالا % % 8(@)(@@) % و أطلق من 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms162# عيون في وجوه % تروح لعقل مبصرها عقالا % % 9(@)(@@) % و معتدل إذا أمضى القضايا % % رأيت الحسن عدلا واعتدالا % % 10(@)(@@) % يميل على الظلام بكأس راح % إذا زحمت ظلام الليل مالا % % PageV01P682 11(@)(@@) % إذا نظم المزاج لها وشاحا % تعرض في مجاسدهاوجالا % % 12(@)(@@) % أرد كؤوسها بيضا خفاقا % و قد صافحتها حمرا ثقالا % % 13(@)(@@) % و سفر يحسبون البر سفرا % يصافحهم إذا ما السير طالا % % 14(@)(@@) % إذا أنسوا بطيات القوافي % % بسيف الدولة ابتدرت عجالا % % 15(@)(@@) % يقودهم إليه ضياء بشر % كأن ضياءه برق تلالا % % 16(@)(@@) % و عرف شمائل كالمسك يثني % % أزمتهم يمينا أو شمالا % % 17(@)(@@) % أغرإذا الحيا لم يحي أرضا % رأيت نواله يحيي الرجالا % % 18(@)(@@) % و أغلب لا تغالبه الليالي % % إذا صالت حوادثهاو صالا % % 19(@)(@@) % يذيل تلادهفيصون عرضا % أبت غر المكارم أن يزالا % % 20(@)(@@) % و يجعل بشره يذر الأعادي % % فيبعثه جنوبا أو شمالا % % PageV01P683 21(@)(@@) % و لم ينذرهم مقةو لكن % ترفع أن يصيبهم اغتيالا % % 22(@)(@@) % يواصلهمو ما اشتاقت إليه % % نفوسهم ولا سألوا الوصالا % % 23(@)(@@) % بأرعن لا ترى البيداء فيه % % إذا ما سد خلتها اختلالا % % 24(@)(@@) % يسد الجو قسطله غبارا % و يطفي الشمس رونقه صقالا % % 25(@)(@@) % بأسد لا تحيد عن المنايا % % إذا اعتقلت قنا الخط اعتقالا % % 26(@)(@@) % إذا ركزته كان لها عرينا ؛ % و إن حملته كان له ظلالا % % 27(@)(@@) % و خيل كالوعولإذا تراءت % % رأيت قرونها السمر الطوالا % % 28(@)(@@) % لها كر محا الأوضاح منها % % و خاط من العجاج لها جلالا % % 29(@)(@@) % و خوض دم إذا جفت أعالي % % قوائمهاأتاح لها بلالا % % 30(@)(@@) % لبسن على الحجول به حجولا % و زدن على النعال به نعالا % % PageV01P684 31(@)(@@) % و ذابلة كأن الزهر غضا % % على أطرافهنأو الذبالا % % 32(@)(@@) % لها في كل سالفة ونحر % عثار تعم د لن يستقالا % % 33(@)(@@) % فمن مبد بهزته انتشاء % و من مبد بخطرته اختيالا % % 34(@)(@@) % و أزرق كالشهابإذا حناه % % دراك الطعن غادره هلالا % % 35(@)(@@) % رأيت علا بني حمدان طالت % % فآلت برة أن لن تنالا % % 36(@)(@@) % ملوك لا يملون العطايا % % و لا يأبون في الروع النزالا % % 37(@)(@@) % فسيل جحافل يفني الأعادي ؛ % و سيل مواهب يغني السؤالا % % 38(@)(@@) % أولئك معشر علقت يميني % % بحبلهمفألقيت الحبالا % % 39(@)(@@) % إذا راحوا بمعركة خصوما % سمعت لبيضهم فيها جدالا % % 40(@)(@@) % فإن عدوا الأكابر من عدي % حسبتهم يعدون الجبالا % % PageV01P685 41(@)(@@) % مدحناهم فلم ندرك بمدح % مآثرهمو 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms163# لم نترك مقالا % % PageV01P686 البحر : - 1(@)(@@) % أبدر دجى غالته إحدى الغوائل % فأصبح مفقودا و ليس بآفل % 2(@)(@@) % أتته المناياو هو أعزل حاسر % خفي غرار السيف بادي المقاتل % 3(@)(@@) % غلام إذا عاينت عاتقثوبه % % رأيت عليه شاهدا للحمائل % 4(@)(@@) % يمسح بالمسك الذكي مرجلا % يرف على المتنين مثل السلاسل % 5(@)(@@) % سواء عليه في السوابغحرة % ثنى عطفهأم في رقاق الغلائل % 6(@)(@@) % و عز على العلياء أن حيل بينه % % و بين ظبا أسيافه والعوامل % 7(@)(@@) % و عري من برديه بالسيف منتضى % فلم يعر من بردي عفاف ونائل % 8(@)(@@) % فأحبب به من راكب غير سائر % مقيم و لكن زيه زي راجل % 9(@)(@@) % يعنبر أنفاس الرياح بشلوه % فنعبق من أنفاس تلك الشمائل % 10(@)(@@) % هو القدر المحتومو السيف لم يكن % % ليخصب إلا من دماء الأفاضل % PageV01P687 11(@)(@@) % أحلك من أعلى الهواء محلة % نأت بك عن ضنك الثرى والجنادل % 12(@)(@@) % و ليس بعار ما عراكو إنما % % حماك اتساع الصدر ضيق المنازل % PageV01P688 البحر : - 1(@)(@@) % من الحزم أن تلقى الهوى و هو مقبل % و كيف ترى عدل الزمان فتعدل % 2(@)(@@) % و عل بماء الورد خيش كأنه % % على جدرهثوب العروس المصندل % 3(@)(@@) % و يومي به يوم أغرفإن تزر % % نعمت بهو هو الأغر المحجل % PageV01P689 البحر : - 1(@)(@@) % جاءت مولعة الكواهل % % تختال صادقة المخائل % % 2(@)(@@) % كحلاء حالية بكت % % حتى انثنت مرهاء عاطل % % 3(@)(@@) % حماءيحسب برقها الس % ساريمفضضة الحمائل % % 4(@)(@@) % يلقى الخمائل من سنا % % ه بمثل نوار الخمائل % % 5(@)(@@) % فيد الجنوب تلفها % % لف الجحافل بالجحافل % % 6(@)(@@) % و الرعد يسلقها بأل % % سنة بألسنة العواذل % % 7(@)(@@) % و يحثها حث الحدا % % ة شوارد الكرم العقائل % % 8(@)(@@) % و البرق يومض بينها % % إيماض حالية الأنامل % % 9(@)(@@) % حتى إذا اشتملت بها ال % % آفاق ضاحكة الشمائل % % 10(@)(@@) % طارت عقائقها على % % آثار أدمعها الهوامل % % PageV01P690 11(@)(@@) % فالجو منها في لظى % % و الأرض منها في مناهل % % 12(@)(@@) % و النور في حليين مش % % تبهين من طل ووابل % % 13(@)(@@) % يلقاك مختلف القلا % % ئد بين مؤتلف الغلائل % % 14(@)(@@) % بدع كأطراف الدما % % لج والأساور والخلاخل % % 15(@)(@@) % ما بين ألحان الحما % % م وبين ألحان الجداول % % 16(@)(@@) % أغشاه طوع أكارم ال % % خلان لا طوع الحلائل % % 17(@)(@@) % نشوان كالغصن انثنى % % ما بين أغصان موائل % % 18(@)(@@) % سبط الأنامل ماسحا % بالمسك جعدا كالسلاسل % % 19(@)(@@) % يسعى إلي بخمر با % % بل ماهر في 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms164# سحر بابل % % 20(@)(@@) % صفراء تحسب أنها % % تنقد من شمس الأصايل % % PageV01P691 21(@)(@@) % قرعت سليلة كرمها % % بسليلة الغر الهواطل % % 22(@)(@@) % فكأنها ذوب الن ضا % % ر يشوبه ذوب الوذائل % % 23(@)(@@) % و كأن نشر كؤوسها % % شكري لأحمد في المحافل % % 24(@)(@@) % ملك خلائقه إلى % % معروفه أدنى الوسائل % % 25(@)(@@) % محمر أيام الوغى % % مبيض أيام الفضائل % % 26(@)(@@) % يحيي بحسن فعاله % % أفعال والده الحلاحل % % 27(@)(@@) % كالورد زالو ماؤه % % عبق الروائح غير زائل % % 28(@)(@@) % بعث الندى في الخافقي % ن مسائلا عن كل سائل % % 29(@)(@@) % و أقام مشهور المكا % % نغريب مشهور الفضائل % % 30(@)(@@) % كالبدر شارف تمه % % فأضاء في شرف المنازل % % PageV01P692 31(@)(@@) % يختال في ظل العلى % % و يرود في ظل المناهل % % 32(@)(@@) % شيم على عليائه % % في الأزدو اضحة الدلائل % % 33(@)(@@) % و أواخر شهدت له % % بمناقب السلف الأوائل % % 34(@)(@@) % ويد كصوب المزن يغ % % مر سجلها سجل المساجل % % 35(@)(@@) % و مهند كل الضرا % % ئب عند هزته مفاصل % % 36(@)(@@) % فكأن قربك سقيه % إذا تألق بالمقاتل % % 37(@)(@@) % يا خير مأمول تنا % % خ بعقوتيه ركاب آمل % % 38(@)(@@) % أفنيت شهر الصوم مق % % بول الفرائص والنوافل % % 39(@)(@@) % فتلق فطرك مطلعا % سعدا يسرك غير آفل % % 40(@)(@@) % و الشعر نزهة قاطن % حط الرحال وزاد راحل % % PageV01P693 41(@)(@@) % فاشرب على ريحانه % % إذ راح غضا غير ذابل % % 42(@)(@@) % و اعلم بأن بديعه % % لب الألباء الأفاضل % % PageV01P694 البحر : - 1(@)(@@) % وضاحك الروض محلى المنزل % سبط هبوب الريح جعد المنهل % 2(@)(@@) % موشح بالنور أو مكلل % مفروجة حلته عن جدول % 3(@)(@@) % أقبل قد غص بمد مقبل % % و الطير تنقض عليه من عل % 4(@)(@@) % تساقط الوشي على المصندل % صبحتهو الصبح سامي الجحفل % 5(@)(@@) % كأنما الشرق به في حيهل % بفتية مثل النجوم المثل % 6(@)(@@) % كل معم في السماح مخول % يهتز للمجد اهتزاز المنصل % 7(@)(@@) % كأنه ريحانة لم تذبل % و شقق تروق عين المجتلي % % 8(@)(@@) % منسوبة إلى الرماح الزيل % قد صبغت صبغ الحريق المشعل % 9(@)(@@) % و صائبات لم تحد عن مقتل % تقابل الخطب خفاف المحفل % 10(@)(@@) % كأنها مخروطة من جندل % إن يقنص الطير بها لا يعدل % PageV01P695 11(@)(@@) % أو تدع منها الصاعدات تنزل % فهن من هاو ومن مجدل % 12(@)(@@) % و من خضيب بدم مرمل % مدثر الحلة أو مهلل % 13(@)(@@) % في يلمق مزرر لم يحلل % بين الخزامى الغض و القرنفل % 14(@)(@@) % و بين أكواب الرحيق السلسل % و فتية عن الخنا 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms165# بمعزل % 15(@)(@@) % عليهم سيما الطراز الأول % % PageV01P696 البحر : - 1(@)(@@) % عنديإذا ما الروض أصبح ذابلا % تحف أغض من الرياض شمائلا % % 2(@)(@@) % خرس تحدث آخرا عن أول % بعجائب سلفتو لسن أوائلا % % 3(@)(@@) % سقيت بأطراف اليراع ظهورها % % وبطونها طلا أجم ووابلا % % 4(@)(@@) % تلقاك في حمر الثياب وسودها % % فتخالهن عرائسا وثواكلا % % 5(@)(@@) % و تريك ما قد فات من دهر مضى % % حتى تراه بعين فكرك ماثلا % % 6(@)(@@) % و إذا خلوت بهن ظمآن الحشا % % منحتك من صوب العقول مناهلا % % 7(@)(@@) % و لها إذا حلت نتاج غرائب % يمكثن ما زرت بهن حواملا % % 8(@)(@@) % يلبسن أردية الأديم كأنما % % رقرقت فيهن الخلوق السائلا % % 9(@)(@@) % فإذا مددت لها يمينك فاتحا % عبقت يمينك راحة وأناملا % % 10(@)(@@) % نشرت حدائقها على أمثالها % % حللا مدبجة وحليا كاملا % % PageV01P697 11(@)(@@) % روض تزخرفه العقول وروضة % باتت تزخرفها الغيوث هواطلا % % 12(@)(@@) % و كتيبتا زنج وروم أذكتا % % حربا يسل بها الذكاء مناصلا % % 13(@)(@@) % في معرك قسم النزال بقاعه % % بين الكماة المعلمينمنازلا % % 14(@)(@@) % لم تسفحا فيه دما و كأنما % % رشحا الدماء أعاليا وأسافلا % % 15(@)(@@) % يبدي لعينيككلما عاينته % % قرنين جالا مقدما و محاولا % % 16(@)(@@) % فكأن ذا صاح يسير مقوما ؛ % و كأن ذا نشوان يخطر مائلا % % 17(@)(@@) % أعجب بها حربا تثيرإذا التظت % % فضل الرجالو لا تثير قساطلا % % 18(@)(@@) % و محكمان على النفوسو ربما % % لم يحكما فيهن حكما عادلا % % 19(@)(@@) % أخوان قد وسما على متنيهما % % سمة تحث على البليد غوائلا % % 20(@)(@@) % يلقاهما المسعود سعدا طالعا % و يراهما المنحوس سعدا آفلا % % PageV01P698 21(@)(@@) % فإذا هما اصطحبا على كف الفتى % % ضراهأو منحاه نفعا عاجلا % % 22(@)(@@) % و صنوف أنبذة إذا عاينتها % % عاينت أفراح النفوس كواملا % % 23(@)(@@) % مثل العرائس ما اختلعن روائحا % وقلائدا لما اختلفن غلائلا % % 24(@)(@@) % و أغن قدح عارضاه فلوذا % % و اخضر شاربهفسار مقابلا % % 25(@)(@@) % من معشر صاغت حلى أجسامهم % % خضرا إذا الأجسام كن عواطلا % % 26(@)(@@) % مبيض أيام العقوبة صابرا % محمر أيام الشطارة صائلا % % 27(@)(@@) % يتذاكر الفتيان كيف يحرموا % % فمضوا قتيلا لا يعاب و قاتلا % % 28(@)(@@) % و لقد تأملت الشطارة قبله % % فوجدتها حقا يسمى باطلا % % 29(@)(@@) % فابكر أبا بكر فقد بكر الهوى % % طلقا لدي وكان جهما باسلا % % 30(@)(@@) % و أجب إلى شرب الشمولفإنها % % تهدي بقربك لي سرورا شاملا % % PageV01P699 31(@)(@@) % و كفاك بي خلا تسر خلاله ؛ % و كفى بمثلك مسعدا 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms166# ومواصلا % % PageV01P700 البحر : - 1(@)(@@) % كملن فأطلعن البدور كواملا % % و ملن فأبدين الغصون موائلا % % 2(@)(@@) % غدون لنا بالوصل أنسا نواضرا % و كن من الهجران وحشا خواذلا % % 3(@)(@@) % يحركن أعطاف العليل صبابة % إذا حركت أعطافهن الغلائلا % % 4(@)(@@) % نوين نوى لم ينو نقص عهودنا % % فغادرن أنواع الدموع هواملا % % 5(@)(@@) % وقفنا لتوديع الأحبة موقفا % يطول علينا أن نرى منه طائلا % % 6(@)(@@) % وسلت ظبا أسيافها مقل الظبا % % فلست ترى إلا قتيلا وقاتلا % % 7(@)(@@) % و أغيد مهتز القوام كأنما % % يهز قضيبا حين يهتز مائلا % % 8(@)(@@) % حباني بطيف كان عارفة الهوى % % فعرفني شغلا عن النوم شاغلا % % 9(@)(@@) % فإن لا أرى الإلف الذي كان آلفا % هوايو لا الشمل الذي كان شاملا % % 10(@)(@@) % فكم ليلة شمرت للراح رائحا % و بت لغزلان الصريم مغازلا % % PageV01P701 11(@)(@@) % و حليت كأسي والسماء بحليها % % فما عطلت حتى بدا الأفق عاطلا % % 12(@)(@@) % هي البيد عادات الركاب يبيدها % % إذا وصلت فيها الضحى والأصائلا % % 13(@)(@@) % إلى معقل الجود الذي جعلت له % % صدور العوالي والسيوف معاقلا % % 14(@)(@@) % تبسم برق الجو فاختال لامعا % و حل عقود الغيث فارفض هاملا % % 15(@)(@@) % فقلت علي منك أعلى صنائعا % إذا ما رجوناهو أرجى مخائلا % % 16(@)(@@) % ربيع تولى عن ديار ربيعة % و قد ألبس النور الربا والخمائلا % % 17(@)(@@) % فخيم في أوطان بكر بن وائل % يقابل بالنعماء بكرا ووائلا % % 18(@)(@@) % فكنت سنانا حين شمرتماضيا ؛ % و كانت عدي كلها لك عاملا % % 19(@)(@@) % فأوحشت ربعا منهم كان آنسا ؛ % و خليت فجا منهم كان آهلا % % 20(@)(@@) % و أجريت بالتل الدماء فلو جرت % % به الخيل حولا ما أثرن القساطلا % % PageV01P702 21(@)(@@) % لقد أمن الأيام من كان خائفا % و نال عرى الآمال من كان آملا % % 22(@)(@@) % بمشتمل بالعدل سلت سيوفه % % على الدهرحتى عاد في الحكم عادلا % % 23(@)(@@) % تحرج أن يظما القنافأعاده % % برغم الأعادي قانيء اللون ناهلا % % 24(@)(@@) % إذا حاول الأقران في الروع ختله % % أبر عليهم م قدما لا مخاتلا % % 25(@)(@@) % فلو نطق الدهر الذي ليس ناطقا % تنصلإذ هزت يداه المناصلا % % 26(@)(@@) % سأشكر إنعام الأمير وفضله % % فقد ألبساني أنعما وفضائلا % % 27(@)(@@) % غدوت وآمالي الظماء تقودني % % إلى جود كفيهفعادت نواهلا % % 28(@)(@@) % و حليت أبكار القصائد باسمه % % و لولاه أضحت ثيبات عواطلا % % PageV01P703 البحر : - 1(@)(@@) % إذا المجرة مالتبعد تعديل % و جاذب الليل حبلا غير موصول 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms167# % 2(@)(@@) % و هب ذو الرعثات الحمر منتشيا % فارتاع من صارم للصبح مسلول % 3(@)(@@) % لما رآه يضم الليل أكبره % فعاد منه بتكبير وتهليل % 4(@)(@@) % فقام من رهطه الأشراف ذولمة % كأنها رهط عمرو أو شراحيل % 5(@)(@@) % أربت على الفرس في التيجان وانتسبت % % للهند أكرم بذاك الجيل من جيل % 6(@)(@@) % مشمرات فضول الوشي مرخية % فضل الشنوف عليها والأكاليل % 7(@)(@@) % تخطو على قضب العقيان مدمجة % لم تدن من قصر مزر ولا طول % 8(@)(@@) % إذا الندى بل من ديباجها سحرا % مشين في زهر ريان مطلول % 9(@)(@@) % بيت ترى الحسن مبذولا بهفإذا % % عداه كان مصوبا غير مبذول % 10(@)(@@) % فمش طرفك فيما شئت من كفل % راب و خصر كخوط البان مجدول % PageV01P704 11(@)(@@) % و في جسوم كخيط العاج ماثلة % تغني النواظر عن حسن التماثيل % 12(@)(@@) % و في الخدود التي جاءت مذهبة % فعدن في أرجوان منه مصقول % 13(@)(@@) % و ربما عاينت عيناك فيه فتى % % ورد الغلالة مخضر السراويل % 14(@)(@@) % مكللات أعالي جدره بدمى % % فإن خلافهو منها جد مأهول % 15(@)(@@) % إذا دخلناه زدنا من محاسنه % % و طيبه في نعيم غير مملول % 16(@)(@@) % و إن خرجنا خلعنا فضل نعمته % % على المناشف منا والمناديل % 17(@)(@@) % حتى إذا أنعمت أجسامناو غدت % % تثني عليه بفضل غير مجهول % 18(@)(@@) % ملنا إلى غرفة الملحي إن بها % % ظبيا من الأنس مبذول الخلاخيل % 19(@)(@@) % نزوره وبقايا الليل تسترنا % % فنهتدي بخليع فيه ضليل % 20(@)(@@) % يرضي النديمو يرضى عن مروءته % % إذا أتاه بمشروب ومأكول % PageV01P705 21(@)(@@) % و إن رآه رقيق الوجه قالأرق % كأس الحياء بضم أو بتقبيل % 22(@)(@@) % فزرتإذ زرته قنديل بيعته % % فالزيت ينشر أضواء القناديل % 23(@)(@@) % و ابسط يمينك في تخميش كدته % % و في قفاهفما سمح بمغلول % 24(@)(@@) % و إن تنفسفاحذر منه صاعقة % تردي الجليسو كن منه على ميل % PageV01P706 البحر : - 1(@)(@@) % ملامك في الهوى أذكى غليلي % % و أضرم لوعة الكمد الدخيل % 2(@)(@@) % أرى جزعي لبينهم جميلا % فكيف أعوذ بالصبر الجميل % 3(@)(@@) % نوى خلعت عذار الدمع حتى % % لقام بعذرنا عند العذول % 4(@)(@@) % فراق ما يفتر من فريق % يطل دمي ودمعي في الطلول % 5(@)(@@) % و هل يخلو الفؤاد من التصابي % % إذا خلت الديار من الخليل % 6(@)(@@) % أعاد لنا هجير الهجر ظلما % و كنا للتواصل في أصيل % 7(@)(@@) % و جال الطرف في عطفي 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms168# قضيب % يؤرقه وسالفتي خذول % 8(@)(@@) % تضر بجلنار الخد خوفا % و تبذل نرجس الطرف الكحيل % 9(@)(@@) % و كم أهدت إلى الأحشاء لما % % تهادت في الغلائل من غليل % 10(@)(@@) % أغارإذا أذاع خفي وجدي % % و أرقني سنا برق كليل % PageV01P707 11(@)(@@) % و حل عقود دمعي في محل % كأن نحول معلمه نحولي % % 12(@)(@@) % كأن يد الرباب حلت رباه % % من النوار في وشي صقيل % 13(@)(@@) % إذا ابتسم الشقائق فيه صبحا % تأود من نسيم صبا عليل % 14(@)(@@) % يذكرني انحدار الطل فيه % % مسيل الدمع في الخد الأسيل % 15(@)(@@) % علام أصد عن حظ جزيل % و أقنع بالقليل من القليل % 16(@)(@@) % و قد أحيا السماح لنا ابن يحيى % % و نوه باسمه بعد الخمول % 17(@)(@@) % فتى يثني الثناء إليه مجد % يقابل آمليه بالقبول % 18(@)(@@) % و نشر من شمائل أريحي % كما جرت الشمال على الشمول % 19(@)(@@) % بلوناه أجل الأزد قدرا % و أسطاها على الحدث الجليل % 20(@)(@@) % و لما طاب أصلا طاب فرعا % و طيب الفرع من طيب الأصول % PageV01P708 21(@)(@@) % فإن يفخر على الأكفاء يوما % فللغرر الفخار على الحجول % 22(@)(@@) % وصلت به الرجاءفواصلتني % % سجية ماجد بر وصول % 23(@)(@@) % فمن روض حمدت به مرادي ؛ % و من ظل شكرت به مقيلي % % 24(@)(@@) % محل ترتع الآمال فيه % % مدى الأيام في ظل ظليل % 25(@)(@@) % و للخطي فيه طول خطو % يقصر مدة العمر الطويل % 26(@)(@@) % ملكتأبا الحسينجزيل شكري % % بما أوليت من نيل جزيل % 27(@)(@@) % أطلت على الزمان يدي حتى % % سطوت عليه سطوة مستطيل % 28(@)(@@) % و كم صاحبت من أمل محال % فأوقفني على طلل محيل % 29(@)(@@) % أؤمل معشرا جهلوا المعالي % % فضلواو هي واضحة السبيل % 30(@)(@@) % فأيهم انكفت هممي إليه % % رأت قفلا فجدت في القفول % PageV01P709 31(@)(@@) % أجود على الجواد بحر مدحي % % و أبخل بالثناء على البخيل % 32(@)(@@) % و آبى أن يرى حلي امتداحي % % على النابي الكهام من النصول % 33(@)(@@) % أتتك يجول ماء الطبع فيها % % مجال الماء في السيف الصقيل % 34(@)(@@) % قواف إن ثنت للمرء عطفا % ثنى الأعطاف في برد جميل % 35(@)(@@) % فلا تحفل بلفظ مستعار % تغب بهو معنى مستحيل % PageV01P710 البحر : - 1(@)(@@) % لا تعرف العدلو هو معتدل % فمثله في فعاله مثل % 2(@)(@@) % أسكرني سكر مقلتيهفما % % دام ثماليفإنني ثمل % 3(@)(@@) % مهلا فحبيه ضلة عرضت % يضل فيه الملام والعذل % 4(@)(@@) % لم ينشر الهجر لي هواجره 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms169# % % حتى انطوى من وصاله الأصل % 5(@)(@@) % ودعني باكيا و قد ضحكت % للبين عنه السجوف والكلل % 6(@)(@@) % و اشتعلت نار خده خجلا % فخلتها في القلوب تشتعل % 7(@)(@@) % ثم انثنى للعناقفامتزجت % % سحائب الدمعو هي تنهمل % 8(@)(@@) % أذم فيها النوى وأحمدها % % لوقفة تلتقي بها المقل % 9(@)(@@) % و قبل ما قبلت محاسنه % % وجهي و وجه السرور مقتبل % 10(@)(@@) % و الليل داج كأن نقبته % ستر على الخافقين منسدل % PageV01P711 11(@)(@@) % حتى بدا الفجر في موردة % كأنه من جماله خجل % 12(@)(@@) % سرنافلم يثن عزمنا ملل % عن السرى إذ حدا بنا الأمل % 13(@)(@@) % و ضمنا معقل الندى فثوت % ركابنا والرجا لها عقل % 14(@)(@@) % حلت فناء الأميرفاشتملت % ظلا من العرفليس ينتقل % 15(@)(@@) % أجارها نائل الغضنفر من % جور زمان سهامه شعل % 16(@)(@@) % أغر ما في أناته عجل % يخشى و لا في عداته مهل % 17(@)(@@) % صاعقة رعد بأسها قصف % و عارض صوب مزنه هطل % 18(@)(@@) % وفر الأعادي لسيفه نفل % و هو لطلاب رفده نفل % 19(@)(@@) % يكتن في حلمه سطاه كما % % يكتن في الغمد مرهف قصل % 20(@)(@@) % أقول إذ جرد الحسام لمن % ناواه أقصر لأمك الهبل % PageV01P712 21(@)(@@) % أما رأيت الحياة تقطع في % % هزتهو الحمام يتصل % 22(@)(@@) % له بتشييد مجده شغل % و للقوافي بذكره شغل % 23(@)(@@) % فهو لها واصل إذا قطعوا ؛ % و هو بها عارف إذا جهلوا % % 24(@)(@@) % أحيت أياديه مجد تغلبه % حتى لعادت أيامه الأول % 25(@)(@@) % هناكإن السرور مقتبل % بالفطرو الهم عنك مرتحل % 26(@)(@@) % فاشرب على الورد قبل فرقته % % فالورد من شأن سيره العجل % 27(@)(@@) % جالية كالحباب تحملها % % حالية من جمالها عطل % 28(@)(@@) % فالعيش غض نسيمه أرج % والدهر غر رداؤه جذل % 29(@)(@@) % و الروض قد راضه الغمام فقد % % فتح نواره الندى الخضل % 30(@)(@@) % جاءتك مثل العروس سافرة % ذكرك فيها الحلي والحلل % PageV01P713 31(@)(@@) % يغض عنها العذول ناظره % % و حشو أحشائه بها غلل % 32(@)(@@) % غرائب تطرب اللبيبكما % % تطربه المسمعات والغزل % 33(@)(@@) % تبذل من درها وبهجتها % % ما ليس إلا لديك يبتذل % PageV01P714 البحر : - 1(@)(@@) % جنح الملحي للسل % % مو وافى يستقيل % 2(@)(@@) % بعد أن جلله خط % ب من الشعر جليل % 3(@)(@@) % غرر ينتسب الصب % ح إليها والحجول % % 4(@)(@@) % نقشت نقش الدناني % % رفمرآها جميل % 5(@)(@@) % و لها عند ذوي الأف % % هام بشر و قبول % 6(@)(@@) % هي داء في شراسي % % فكثاو وغليل % 7(@)(@@) % و سيوف 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms170# لك منها % % حين تهتزنكول % 8(@)(@@) % قلت للشعرأقله % إنه شيخ جهول % 9(@)(@@) % قال ليليس إلى ما % % رامه الدهر سبيل % 10(@)(@@) % قد وهى ستر رقيق % و قضى ود عليل % PageV01P715 11(@)(@@) % قصرت أيامنا البي % % ضو في يومك طول % 12(@)(@@) % دعوة ينتسب القح % ط إليهاو المحول % 13(@)(@@) % ليس إلا العطش القا % % تلو الماء الثقيل % 14(@)(@@) % مجلس فيه لأربا % % ب الخنا قال وقيل % 15(@)(@@) % و ضراط مثل ما انشق % ق الدليقي الصقيل % 16(@)(@@) % و إذا اختال خلال الش % شرب عذراء شمول % 17(@)(@@) % لعبت أيد لها أق % فية القوم طبول % 18(@)(@@) % لست من شكلك والنا % % س ضروب وشكول % 19(@)(@@) % أنت للحاكةحتى % % يصدر الورد خليل % 20(@)(@@) % فاقطع الرسلفقد أز % % رى بنا منك الرسول % PageV01P716 البحر : - 1(@)(@@) % لنا مجلس لو لم تغب عنه كامل % و جامعة شمل السرور شمول % 2(@)(@@) % ربيبة عمر الزعفرانذكية % شمائلها للزعفران شكول % 3(@)(@@) % تضمنها في بيت عررة قائم % على فرد رجل فيه ليس يميل % 4(@)(@@) % يحدر في الأكنان حيا مسندا % و يصلب في الجدرانو هو قتيل % 5(@)(@@) % بأخضرتبدو منه للعين لجة % تلاقت دبور فوقها وقبول % 6(@)(@@) % تبيض بالكافور لا أن نشره % % يقلو لكن السماح جميل % 7(@)(@@) % و أبيض صاف خلصته من القذى % % شمال جلت متنيهفهو صقيل % 8(@)(@@) % يرد على الصهباء برد فؤادها % % إذا زارها منه أخ وخليل % 9(@)(@@) % كأن حصى الياقوت نهب أكفنا % % يذوب عليها تارة ويسيل % 10(@)(@@) % و محبوسة الأنفاس مجروحة الحشا % % يخفف عنها الصبو هو ثقيل % PageV01P717 11(@)(@@) % كأن شمالا صافحت صفو مائها % % و ليس إليه للشمال سبيل % 12(@)(@@) % ترى أسمح الفتيان يطلب نيلها % % على أنه طلق اليدين منيل % 13(@)(@@) % إذا لم يكن للماء ظل يكنه % % فسربالها ظل عليه ظليل % 14(@)(@@) % و قد حجب الجدران عن كل ناظر % من الريط مبلول صباه بليل % 15(@)(@@) % حجاب من الكتان رق هواؤه % % كأن هجير اليوم فيه أصيل % 16(@)(@@) % يرش بماء الوردحتى ترى له % % دموعا على ما اخضل منه تجول % 17(@)(@@) % فإن أنت لم تدرك ثقاتك عاجلا % طلعت عليهم والعقول أفول % PageV01P718 البحر : - 1(@)(@@) % لقد سودت عرس ابن حمزة وجهه % و كان مضيئا وجهه في المحافل % 2(@)(@@) % و ما حيلة الأعمى القبيحإذا التوت % عليه حسان الآنسات العقائل % % 3(@)(@@) % و كان خبيثا قبل ذاكمخاتلا % فأنسته أفعال الخبيث المخاتل % 4(@)(@@) % أرادت قضاء الحق يوما بزورها 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms171# % % و مأرب حق شيب منها بباطل % 5(@)(@@) % فسارت على قصد السبيلهنيهة % و مالت إلى غصن من البان مائل % 6(@)(@@) % فمر لها يوم على النهر صالح % غريب من الأيامحلو الشمائل % 7(@)(@@) % يعاطي الندامى طرفها سحر بابل % و تأخذ من أيديهم خمر بابل % 8(@)(@@) % إلى أن قضت حق الرجال وضيعت % بباطلهاحق النساء الثواكل % 9(@)(@@) % و عادت بورد ذابل الورد حائل % بعض الثنايا لا بعض الأنامل % 10(@)(@@) % فلم تدن من شق الجيوب ولم تغض % مع الشرب أسراب الدموع الهوامل % PageV01P719 11(@)(@@) % و لو صدقت لم تلق ثكلى تسلبت % % من الحزن في حمر الحلى والغلائل % PageV01P720 البحر : - 1(@)(@@) % إلام يروم الحاسدون نضالي % % و أيمانهم في الرمي دون شمالي % % 2(@)(@@) % أنا الصارم المشهور كادني العدا % % بإفك هوت أركانهو محال % 3(@)(@@) % فما ثلم الأعداء حد مضاربي % % و لا شرب الحساد ماء صقالي % % 4(@)(@@) % إذا هبطت أنساب قوم فموطني % % ذرى نسب بين التتابع عالي % % 5(@)(@@) % و ناهيك من أيد تصول وألسن % تقول وأرماح تهز طوال % 6(@)(@@) % شققت قذال الخالدي بمنطق % يشق من الأعداء كل قذال % 7(@)(@@) % و ناضلني الملحي عنهفأصبحت % جوارحه مجروحة بنبالي % % 8(@)(@@) % و ما لعلي بائع الملح بالنوى % % إذا نلت أم الخالدي وما لي % % 9(@)(@@) % و هلا أتانيإذ هفا متنصلا % و قد عاينت عيناه حد نصالي % % 10(@)(@@) % و قد كان يخلي بيته لمآرب % إذا زار إلف أو حبا بوصال % PageV01P721 11(@)(@@) % على أنه يكريه يوما بخمسة % موجهة بيض الوجوهثقال % 12(@)(@@) % بخلت بذكر الله من كل جانب % فهنبذكر الله غير خوالي % % 13(@)(@@) % روافع أبصار خفضن مذلة % و طول يمين قصرتو شمال % 14(@)(@@) % تحبو لكن نفعها لمحبها % % غداة نوى منها و وشك زيال % 15(@)(@@) % فإن شئت أن تحظى بوصل غزالة % مهفهفة الكشحينأو بغزال % 16(@)(@@) % فقدم له الجدي الرضيعو ثنه % % بعذراء من ماء الكروم زلال % 17(@)(@@) % ولا تلقهإلا بخير وسيلة % يلوح على وجهيه خيرمقال % 18(@)(@@) % بباز إذا أرسلته صاد كل ما % % تروم به أو نال كل منال % 19(@)(@@) % سيحمله جري على ظهر جامح % يؤول بما في الظهر شر مآل % 20(@)(@@) % و يعلم أن السلم كان سلامة % لديهو ظلا آذنا بزوال % PageV01P722 البحر : - 1(@)(@@) % أجلهو الفتح لا فتح يشاكله % % أفاد عاجله عزا وآجله % % 2(@)(@@) % تفتحت فيه أبواب السماء على % % أغر مفتاح باب 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms172# البشر نائله % % 3(@)(@@) % أشاح للحرب لا كتب و لا رسل % إلا الوشيج الذي تدمى عوامله % % 4(@)(@@) % و أضحك الثغر إلا أن مبسمه % % إذا تبسم مسرورا مناصله % % 5(@)(@@) % غزو إذا العام أبقى منه باقية % أتاه يزجي لحتف الثغر قابله % % 6(@)(@@) % بكاهل الملك سيف الدولة اطأدت % قواعد الدينو اشتدت كواهله % % 7(@)(@@) % من الرماحو إن طالت مخاصره % % كما الدروعو إن أوهت غلائله % % 8(@)(@@) % مظفر الغزو لم تحرم صوارمه % % ما أملتهو لم تخفق عواسله % % 9(@)(@@) % أمضى من القدر المحتوم صارمه % % إلى النفوسو أمضى منه حامله % % 10(@)(@@) % مجرد العزم في طاغ يقارعه % % عن حرمة الدينأو باغ يناضله % % PageV01P723 11(@)(@@) % حصون خرشنة العليا فرائضه % % إذا غزاو ضواحيها نوافله % % 12(@)(@@) % فليس ينفك من عيش يقاطعه % % في طاعة اللهأو سير يواصله % % 13(@)(@@) % زار البحيرة بحر من كتائبه % % تخفي سواحلها القصوى سواحله % % 14(@)(@@) % كالسيل تحفز أولاه أواخره % حتى أسال دروب الروم سائله % % 15(@)(@@) % تضايق الأرض ما سارت جحافله % % و تمرض الشمس ما ثارت قساطله % % 16(@)(@@) % ظلت أواخره ينهضن من حلب % و قد أطافت بشمشاط أوائله % % 17(@)(@@) % تحن فيه الكماة المعلمون إلى % % ورد الحتوفإذا حنت صواهله % % 18(@)(@@) % إذا رمى بلدا منه بجائحة % خرت أعاليهو ارتجت أسافله % % 19(@)(@@) % حتى تؤدي الحصون الشم ساك نها % % خوفا و تسلم من فيها معاقله % % 20(@)(@@) % أعداءهإن تفوتوا اليوم عدته % % تغلكم في الغد الأدنى غوائله % % PageV01P724 21(@)(@@) % لا يوسع الأسد الضرغام خطرته % % مخايل الأسد قد تبت حبائله % % 22(@)(@@) % عودوا بهو استقيلوه الحقيقة من % ضرب يقد متون البيض باطله % % 23(@)(@@) % فكم خليج دم أجرت أسنته ؛ % و كم خليج ند أجرت أنامله % % 24(@)(@@) % من ذا يساجله منكإذا انبعثت % سحال كفيه أم من ذا يطاوله % % 25(@)(@@) % كم وقفة لك في أدنى ديارهم % أخذت بالسيف منها ما تحاوله % % 26(@)(@@) % غضبت للدين حتى عاد كوكبه % % طلقا يضيء على الآفاق آفله % % 27(@)(@@) % بكل يوم إذا استلت صوارمه % % عادت ضحاهو قد جاءت أصائله % % 28(@)(@@) % تركت فج العدالما نزلت به % وحشا مغانيهمهجورا منازله % % 29(@)(@@) % مسودةمن لظى حام ملاعبه % % محمرةمن دم جار جداوله % % 30(@)(@@) % تحن شوقا إلى الأسرى أرامله % % إذا بكينعلى القتلى ثواكله % % PageV01P725 31(@)(@@) % قسمت فيئهم في فيء دارهم % حوا عواتقهحورا عقائله % % 32(@)(@@) % وحشا من السبي آنست الكماة به % % سيان في الحسن حاليه وعاطله % % 33(@)(@@) % فكم شجاع شرى 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms173# لله مهجته % % فأكره الرمح حتى احمر عامله % % 34(@)(@@) % غدا ينازل ليثا أو يقارعه % % و راح يحوي غزالا أو يغازله % % 35(@)(@@) % بذلت ما جادت البيض الرقاق به % % فأنت سالبهقسرا و باذله % % 36(@)(@@) % أما القريضفقد عادت هوامله % % مرعيةو جرت سكبا هوامله % % 37(@)(@@) % رأى علي بن عبد الله قبلته % فراح يهوي إليهأو يقابله % % 38(@)(@@) % كالحلي صادف جيدا شكل جوهره % فصد عن كل جيد لا يشاكله % % PageV01P726 البحر : - 1(@)(@@) % نحن للأيام غنم ونفل % ترحل الأحداث عنا أو تحل % 2(@)(@@) % نقبل الضيم من الدهرو هل % للذي نأباه بالدهر قبل % 3(@)(@@) % و إذا ما زلت النعل بنا % % فمن الأيام لا منا الزلل % 4(@)(@@) % نوب قلنالعاد قبلنا % % إن من ذات العماد المرتحل % 5(@)(@@) % فانثنوا عن ذلك الشرب الذي % % صار علا لسواهم ونهل % 6(@)(@@) % بعدما غصت بأسيافهم % كثب السهل وأوعار الجبل % 7(@)(@@) % و رمت طسما فقل في غرض % تتحداه يداها بشعل % 8(@)(@@) % و أظلت صاحب الخصرفما % % برحت حتى غدا تحت الأظل % 9(@)(@@) % و أرى الأملاك من أسرتنا % % قصدت ملكهم حتى اضمحل % 10(@)(@@) % ألبست قوما سواهم حليهم % % ثم بزتهفراحوا بالعطل % PageV01P727 11(@)(@@) % فكأن الدهر لم يجمع لهم % رغد العيش وإرغام الدول % 12(@)(@@) % فاسأل الحيرة عن جبارها % % حين يوماه حياة وأجل % 13(@)(@@) % يرتدي ظل السديرينفإن % شبت الحرب ارتدى ظل الأسل % 14(@)(@@) % و المنايا الحمر في ساحته % % ماثلات بين ومض وزجل % 15(@)(@@) % و سل الإيوان عن أربابه % % كيف جدت لهم تلك الرحل % 16(@)(@@) % نقلتهم عن فضاء واسع % يسرح الطرف به حتى يمل % 17(@)(@@) % و جنان ذللت أثمارها % % بين أمواه نميرات وظل % 18(@)(@@) % نحن أغراض خطوب إن رمت % حيرت في دقة الرمي ثعل % 19(@)(@@) % و إذا ما اختلفت أسهمها % % فأصابت بطل القوم بطل % 20(@)(@@) % يا بني فهد هو الدهر الذي % % نال من عزكم ما لم ينل % PageV01P728 21(@)(@@) % أشرقت أيامكم ثم دجت % و سجى ظلكم ثم انتقل % 22(@)(@@) % نقض الدهر بكم أوتاره % % من ملوك ذللوا الدهرفذل % 23(@)(@@) % أين أيديكمإذا الخطب عرا % % و أيادكمإذا الجدب شمل % 24(@)(@@) % ودعت دنياكم بهجتها % % و استوى الأرباب فيها والخول % 25(@)(@@) % و لو ان العز أثوى دهره % % في قبيل لثوى فيكم وحل % 26(@)(@@) % و عسى الأيام ترتاح لكم % % فيعود الهم بالعود جذل % 27(@)(@@) % فلكم مشف على الحتف نجا % % و مريض قد رأيناه أبل 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms174# % 28(@)(@@) % هل أرى أيديكم مبسوطة % بين حالين سماح وقبل % 29(@)(@@) % و العطايا الغر تنهل على % % آملي جودكم أو تستهل % 30(@)(@@) % بعدما ودعتها مقلعة % مثلما ودع ذو الشيب الغزل % PageV01P729 31(@)(@@) % و هل الناس الأخيرون إذا % % جرت الأقدار إلا كالأول % 32(@)(@@) % و ضحت آثارهم ثم عفت % و بدا سعدهم ثم أفل % PageV01P730 البحر : - 1(@)(@@) % ألا حي مفقود الشمائل ماثلا % % غدا هاجر الدنياو إن كان واصلا % % 2(@)(@@) % أقامو قد جدت به رحلة الردى % % فأضحى مقيما في ذرى الجذع راحلا % % 3(@)(@@) % أبا الفضلغالتك الخطوبو لم يكن % ليعدم ذو الأفضال منها الغوائلا % % 4(@)(@@) % فأصبحت مسلوب القميصو طالما % % حملت على قمص الحديد الحمائلا % % 5(@)(@@) % و حولك من بكر بن وائل فتية % إذا عد أهل الفضل كانوا الأوائلا % % 6(@)(@@) % أصابهم ريب الزمانو إنما % % أصاب من العليا سناما وكاهلا % % 7(@)(@@) % كأنهم في الليل ركب تحيروا % % فجدوا من السير الحثيث الحبائلا % % 8(@)(@@) % تلقاهم حر الهجير برأفة % تخيل أوقات الهجير أصائلا % % 9(@)(@@) % و أضحى الحيافي غير حين أوانه % % رذاذا على تلك الجسوم ووابلا % % 10(@)(@@) % كأن السماء استعبرت لمصابهم % % فما ملكت فيه الدموع الهواملا % % PageV01P731 البحر : - 1(@)(@@) % يا سارق الشعراء ما نظموه من % % در كزاهرة النجوم مفصل % 2(@)(@@) % إن كان شعري في إسارك موثقا % ما بين مغلول وبين مكبل % 3(@)(@@) % لو كنت لا تعطي الأمان مدائحي % % من وثبة أو غارة لا تنجلي % % 4(@)(@@) % فخف الإلهو ما أظنك خائفا % أن تدعي سور الكتاب المنزل % 5(@)(@@) % فالناس منك محيرون تخوفا % أن تمتحي سنن النبي المرسل % 6(@)(@@) % يا خالديو كل خزيك خالد % لا ينقضي للناظر المتأمل % 7(@)(@@) % ما زلت إن عد الفضائل خاملا % لكن نقصك ظاهر لم يخمل % PageV01P732 البحر : - 1(@)(@@) % تأبى المنازل أن تجيب مسائلا % % حالتو لست عن الصبابة حائلا % % 2(@)(@@) % خلفت مدامعنا الندى في ربعها % % فتناثرت طلا عليه ووابلا % % 3(@)(@@) % أذكرننا زمن الشباب مدبجا % و الدهر غرا و الحبيب مواصلا % % 4(@)(@@) % أيام يجمع للجمال محافلا % ملء العيونو للغرام محافلا % % 5(@)(@@) % حركات أغصان يميلها الصبا % % هيفا فتتبعها القلوب موائلا % % 6(@)(@@) % و فوارغ الأحشاء من برح الصبا % % يضحي الفراغ بهن شغلا شاغلا % % 7(@)(@@) % رد الهوى العذري فيك رداءه % % و سقيت أوبة من ترحل عاجلا % % 8(@)(@@) % قصرت تحيات الوداع فلم أنل % % إلا مصافحة الكواعب نائلا % % 9(@)(@@) % وصل من الأطراف 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms175# لو وصلت به % % عرف السوالف كان عرفا كاملا % % 10(@)(@@) % إن كان مكذوبا عليهفلم دعا % % عبد السلام ولم يحذف واصلا % % PageV01P733 البحر : - 1(@)(@@) % خطوب تجورو لا تعدل % و ليس لنا دونها موئل % 2(@)(@@) % فلا نحن نغفل عن ذمها % % و لا هي عن ضيمنا تغفل % 3(@)(@@) % أبا الحسن اخترمتك المنون % و كانت بمثلك لا تحفل % 4(@)(@@) % و كيف تخطت إليك الورى % % و أنت حضيضهم الأسفل % 5(@)(@@) % تذكرت إذ أنت ستر لنا % % و إذ نحن حصنك والمعقل % 6(@)(@@) % و إذ لك من قصب أسهم % طوال و من خشب منصل % 7(@)(@@) % و إذ أنت في القر لا تصطلي % % نشاطا وفي الحر لا تفشل % 8(@)(@@) % تباكر مطردا متنه % % نقيا كما اضطرب الجدول % 9(@)(@@) % و من فوق رأسك غريدة % صدوح كما صدح البلبل % 10(@)(@@) % و يمناك تبعث في سرعة % رسولا بيسراك يستقبل % PageV01P734 11(@)(@@) % و رجلاك تصعد إحداهما % % فواقا و إحداهما تنزل % 12(@)(@@) % كأنك لم تطو منشورة % على أرض بيتك تستعمل % 13(@)(@@) % و لم ترث للشيخ لما مضى % % يراعا تناط به الأحبل % 14(@)(@@) % و مرهفة حدها في الوغى % % كهام و حاملها أعزل % 15(@)(@@) % تهان إذا صين أشباهها % % فليست تصان ولا تصقل % 16(@)(@@) % فطال النديم ولو يسيتطع % بكى الورد والدن والمبذل % 17(@)(@@) % و كنت تشاهده فاعلا % غداة الصبوح كما يفعل % 18(@)(@@) % أقول و يعشق فوق الرقاب % بمثلك يحتفل المحفل % 19(@)(@@) % تمل الجديد الذي شنته % % فما زلت في خلق ترفل % 20(@)(@@) % وجادت ثراكعلى بخل من % % يحل بهديمة تهطل % PageV01P735 21(@)(@@) % فإنك من معشر فضلهم % % قديم وإيمانهم أول % 22(@)(@@) % لهم بالصناعةلا بالصني % % ع ستر على غيرهم مسبل % PageV01P736 البحر : - 1(@)(@@) % سعد حبيت بهوجد مقبل % و سعادة تصفو عليك وتكمل % 2(@)(@@) % و مسرة قرنت بشمل جامع % فسمت جنوب رياحه والشمأل % 3(@)(@@) % ظفرت يداك أبا المظفربالتي % % كان الزمان بها يضن ويبخل % 4(@)(@@) % جاءتكو هي عقيلة الصدف التي % % أضحى لها من لج بحر معقل % 5(@)(@@) % زف العفاف إلى العفاف ولم يكن % % شرف الفضيلة فائتا من يفضل % 6(@)(@@) % كرم تشعب سيله ثم التقى % % إذ لم يكن عن ملتقاها معدل % 7(@)(@@) % و بنات عم المرء خير نسائه % % إن الكريم إلى الكريمة أميل % 8(@)(@@) % فالمجد عندهما ضحوك مسفر % و النسل بينهما معم مخول % 9(@)(@@) % فرعان ضمهما الظلال المرتضى % % في الغر والشرف 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms176# الرفيع الأطول % 10(@)(@@) % يا غرة الأمراء إن زماننا % % ما عشت في الدنيا أغر محجل % PageV01P737 11(@)(@@) % أنت الحيا الجود الذي آفاقه % % تنهل بالمعروفأو تتهلل % 12(@)(@@) % علمت ربيعة أنك العلم الذي % % يهدي إلى سنن الندى من يجهل % 13(@)(@@) % الكوكب الفرد الذي يسرى به % % و الليل معتكر الجوانب أليل % 14(@)(@@) % و المبتني الشرف الذي لا ينثني % % الحامل العبء الذي لا يحمل % 15(@)(@@) % إن حل فهو من الجلالة محفل ؛ % أو سارفهو من الشهامة جحفل % 16(@)(@@) % يلحى على البخل الرجال وإنما % % يلحى على كرم الفعال ويعذل % 17(@)(@@) % و الجور يكره غير أن يمينه % % أبدا تجور على اللهى فتقبل % 18(@)(@@) % لما ذكرت الحادثات بذكره % % جاءت إلي صروفها تتنصل % 19(@)(@@) % هنئت ما أعطيته من نعمة % غراء تحسن في العقول وتجمل % 20(@)(@@) % فكأنني بك بين نسل طاهر % تردي أمامك في الحديد وترفل % PageV01P738 21(@)(@@) % كالبدر حفته كواكب أفقه % % و الليث تخطر في حماه الأشبل % 22(@)(@@) % ما جملتك مدائحي لكنها % % أضحت بذكرك في الورى تتجمل % 23(@)(@@) % عادت بمدحك معلما ولقد ترى % % من قبله وكأنما هي مجهل % 24(@)(@@) % أنت الحسام فرنده في متنه % % متردد ويد المدائح صيقل % 25(@)(@@) % فاسلم لكل فضيلة تعلو بها % % ما ليس يعلوه السماك الأعزل % 26(@)(@@) % متجنبا خطل الكلام كأنما % % بعث البعيث له وعاش الأخطل % 27(@)(@@) % فكأنه سيف بكفك منتضى % % و كأنه عقد عليك مفصل % PageV01P739 البحر : - 1(@)(@@) % حمى الأمير أمان الخائف الوجل % و راحتاه حياة السهل والجبل % 2(@)(@@) % هو الجواد الذي لولا مكارمه % % لم يعرف الجود في الدنيا ولم ينل % 3(@)(@@) % يا أوسع الناس صدرا يوم ملحمة % و أضرب الناس فيها هامة البطل % 4(@)(@@) % فصدت والسعد في أعلى مطالعه % % مقابل منك سعدا غير منتقل % 5(@)(@@) % يد السماح جرى منها سحاب دم % و كم لها من سحاب في الندى خضل % 6(@)(@@) % مورد السيل يضحي من تنسمه % % لطيبه عن جني الورد في شغل % 7(@)(@@) % كأنما خاضت الريح العبير به % % أو صافحت زهر الحوذان والنفل % 8(@)(@@) % فإن يكن نال منك الفصد ما عجزت % % عنه الكماة بحد البيض والأسل % 9(@)(@@) % فما على كفك الآسي بمبضعه % % أنحى ولكنه أنحى على الأمل % 10(@)(@@) % وإن يكن مسها من جرحه ألم % فطالما ألمت من كثرة القبل % PageV01P740 11(@)(@@) % لا تكذبن فلو جاز الفداء لها % % من الحديد 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms177# فداها الناس بالمقل % 12(@)(@@) % ما بال رسمي من جدوى يديك عفا % % فصار أوضح منه دارس الطلل % 13(@)(@@) % لقد تجاوزت بي وقتي وأي حيا % في غير إبانه يشفي من الغلل % 14(@)(@@) % و قد تمهلت شهرا بعده كملا % و إنما خلق الأنسان من عجل % PageV01P741 البحر : - 1(@)(@@) % أصبحت فردا يا أبا جعفر % لا سلف دان و لا نسل % 2(@)(@@) % فأنت كالكمأة مجنية % ليس لها فرع ولا أصل % PageV01P742 البحر : - 1(@)(@@) % مفتولة مجدولة % تحكي لنا قد الأسل % % 2(@)(@@) % كأنها عمر الفتى % % و النار فيها كالأجل % % PageV01P743 البحر : - 1(@)(@@) % رمى الله رئبال القريض برئبال % و مغتال ما حبرت منه بمغتال % 2(@)(@@) % حجبت عن الأسماع منه بقية % مقيدة عن كل حل وترحال % 3(@)(@@) % وأطبقت إشفاقا عليه حقاقه % % فصار وما أرخصت من حليهغال % % 4(@)(@@) % وحذرني أن يستباح حريمه % % تذكر بيت يقطع الأرض جوال % 5(@)(@@) % ألا يحبس الشيخ الغيور بناته % % مخافة جني الشمائل بطال % PageV01P744 البحر : - 1(@)(@@) % لي من عبيد الله خل ما أرى % % في جاهه طمعا ولا في ماله % % 2(@)(@@) % كم جاهل بالأمر حاول نيله % % فرأى منال النجم دون مناله % % 3(@)(@@) % قد قلت للضيف المقيم بداره % % لما شكا لك أسوة بعياله % % 4(@)(@@) % دار عدمت الخير يقظانا بها % % فرقدت كي أحظى بطيف خياله % % PageV01P745 البحر : - 1(@)(@@) % هل سبيل إلى تقاصر ليل % غاب عني الحسين فيه فطالا % % 2(@)(@@) % وصلتني به طوارق هم % أعدمتني من السرور منالا % % 3(@)(@@) % بنديم يواصل الصمت لا يس % % أل عنا ولا يجيب سؤالا % % 4(@)(@@) % فكأني منادم منه لولا % % حركات من جسمهتمثالا % % PageV01P746 البحر : - 1(@)(@@) % أفق من سكرة الأمل المحال ؛ % و من ديباجة العرض المزال % 2(@)(@@) % ولا تجزع لميل الدهرإني % % أؤمل أن يعود إلى اعتدال % 3(@)(@@) % سكنت إلى الرحيل وكيف أثوي % % بأرض لم تكن ملقى رحال % 4(@)(@@) % ألم بربعها حذرا فألقى % % ملم الشيب في لمم الجبال % 5(@)(@@) % تلألأت الربى لما علاها % % كأن على الربى أثواب آل % 6(@)(@@) % كأن ذرى الغصونلبسن منه % % حلى الكافورربات الحجال % 7(@)(@@) % تجول العين فيه وهو فيها % % كشهب الخيلرحن بلا جلال % 8(@)(@@) % وأسد من أسود الراح تسطو % % شمائلها على أسد الشمال % 9(@)(@@) % و ساق كالهلال يدير شمسا % على الندمان في مثل الهلال % 10(@)(@@) % يخط له بمسك صولجان % فتلهب فوق وجنته بخال % PageV01P747 11(@)(@@) % ترى الأقداح من بيض خفاف % يصرفها ومن 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms178# حمر ثقال % PageV01P748 البحر : - 1(@)(@@) % يأبى إذا خطر العقيق بباله % % إلا اطراح العذل من عذاله % % 2(@)(@@) % قسم الدموع على المنازل عالما % أن الجوى فيهن من أنذاله % % 3(@)(@@) % وهو الكثيب تلاعبت أيدي النوى % % بكثيبه وقضيبه وهلاله % % 4(@)(@@) % راحوا به واللحظ يقدح جرأة % فيكر بين حجوله وحجاله % % 5(@)(@@) % و الشوق ينثر دمعه في خده % فيقرأو يجري على جرياله % % 6(@)(@@) % يا دار جاد بها الفراق جمالها % % فغدا وراح على ظهور جماله % % 7(@)(@@) % ما بال ريمك لا يتاح لقاؤه % % لمحبه إلا غداة زياله % % 8(@)(@@) % فسقيت رجع حدوجه وسقى الحيا % % محتلهو سقيت عود وصاله % % 9(@)(@@) % و رقيقة كالآل نادمني بها % % كسرى فرحت كأنني من آله % % 10(@)(@@) % ألقاه إما حاسرا لصبوحه % % فيهاو إما دارعا لقتاله % % PageV01P749 11(@)(@@) % وأداه ساق لنا أداة شموله % مجموعة بيمينه وشماله % % 12(@)(@@) % أو نابل لما تكامل نزعه % % لم تتصل أغراضه بنباله % % 13(@)(@@) % أتراه صان عن الرمية سهمه % % أم رأفة منعته عن إرساله % % 14(@)(@@) % عصر مزجت شمائلي بشموله % % و ظلاله ممزوجة بشماله % % 15(@)(@@) % حتى حسبت الورد من أشجاره % % عبقا أو الريحان من آصاله % % 16(@)(@@) % و كأنني لما ارتديت ظلاله % % جار الوزير المرتدي بظلاله % % 17(@)(@@) % الواتر الأموال يوم عطائه % % و النافض الأوتار يوم نزاله % % 18(@)(@@) % ملك تحاذره الملوكفممسك % بحبالهأو هالك بصياله % % 19(@)(@@) % أمواله في السلم من أنفالها % % و نفوسها في الحرب من أنفاله % % 20(@)(@@) % صقل الزمانفعاد في أيامه % % كالبرد في تفويفه وصقاله % % PageV01P750 21(@)(@@) % إن كنت تشتاق الحمامفعاده ؛ % أو كنت تختار الحياة فواله % % 22(@)(@@) % يعطيك ما يعطيه كر جياده % % و شبا أسنته وحد نصاله % % 23(@)(@@) % حمل القنا فاهتز في مهتزه % طربا لهو اختال في مختاله % % 24(@)(@@) % فأرى العدو نقيصة في عمره ؛ % و أرى الصديق زيادة في حاله % % 25(@)(@@) % بوقائع للبأس في أعدائه % % و وقائع للجود في أمواله % % 26(@)(@@) % عذلوه في الجدوى ومن يثني الحيا % % أم من يسد عليه طرق سجاله % % 27(@)(@@) % متشابه الطرفين أصبح عمه % % في ذروة لم تعد ذروة خاله % % 28(@)(@@) % شرف أطال قنا المهلب سمكه % % حتى أظل وعم في إظلاله % % 29(@)(@@) % فإذا بدت زهر الكواكب حوله % % كانت عمائمهن من أذياله % % 30(@)(@@) % راح المغيرةو هو من أجواده % % و غدا قبيصة وهو من أبطاله % % PageV01P751 31(@)(@@) % فارت صدور رماحكم بصدوره % % و الناس مشتركون في أكفاله % % 32(@)(@@) % أما السماحفقد تبسم نوره 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms179# % % بعد الذبول وعاد نور ذباله % % 33(@)(@@) % أطلقت من أغلاله وشفيت من % % أعلاله وفتحت من أقفاله % % 34(@)(@@) % إن الوزير دعا إلى عمر الندى % % من كان موقوفا على أوشاله % % 35(@)(@@) % أثني عليه ثناء روض هزه % % سيل الحيا فاهتز في إسباله % % 36(@)(@@) % و أقول للساعي ليدرك شأوه % % أنت الجواد ولست من أشكاله % % 37(@)(@@) % كملت مناقبه فلو زاد امرؤ % بعد الكمال لزاد بعد كماله % % 38(@)(@@) % و غدت خلائقه أحق بمنطقي % % فمزجت صفو زلالها بزلاله % % 39(@)(@@) % أهدي له ما رق من أفوافه % % و أبيحه ما رق من سلساله % % 40(@)(@@) % و يقول لي قوم فضلت وإنما % % فضل الثناء عليه من إفضاله % % PageV01P752 41(@)(@@) % لا حمد لي إن راح در مدائحي % % عقدا و قد فصلته بخلاله % % PageV01P753 البحر : - 1(@)(@@) % و سوداء آبقة قيدت % % فمن كل وجه لها حائل % 2(@)(@@) % توسطت البحرحتى نأى % % على من أقام بها الساحل % 3(@)(@@) % و حنت إلى البر مشتاقة % إليهكما حنت الثاكل % 4(@)(@@) % و دار لها فلك خارج % يدور به فلك داخل % 5(@)(@@) % فسكانهاالدهرمن نفعها % % شباب و شيبهم كامل % % 6(@)(@@) % إذا رامها فارس نالها % % و يعجز عن نيلها الراجل % % PageV01P754 البحر : - 1(@)(@@) % بمن تسطو الصوارم والعوالي % % و قد غالتك أحداب الليالي % % 2(@)(@@) % وأومض ناجذاك بلا ابتسام % و مدت راحتاك بلا نوال % % 3(@)(@@) % أجد الطير شلوك وهو باد % لمخترق الجنائب والشمال % % 4(@)(@@) % تمر به ولا تعلو عليه % % حياء من كريمات المعالي % % PageV01P755 البحر : - 1(@)(@@) % قبلت على الكره نيل البخيل % و قلتقليل أتى من قليل % 2(@)(@@) % تعجيت لما ابتدا بالجميل % و ما كان يعرف فعل الجميل % 3(@)(@@) % و أطلع لي كوكبا كالسها % % قليل الضياء سريع الأفول % 4(@)(@@) % و ما كان إعطاؤه سؤددا % و لكنها غلطة من بخيل % PageV01P756 البحر : - 1(@)(@@) % حرق تمتري الدموع سجالا % % و خيال يزور وهنا خيالا % % 2(@)(@@) % عذلوني وليس يرضي التصابي % % عاشق ليس يسخط الع ذالا % % 3(@)(@@) % لا عدمت الهوى الجديد وإن جد % د في القلب لوعة وخبالا % % 4(@)(@@) % شغلتني الدموع فيهفما أع % % رف إلا بفيضهن اشتغالا % % 5(@)(@@) % بقضيب يهز قلبيإذا اهتز % ز وطورا يميله كيف مالا % % 6(@)(@@) % و هلال دعته داعية البي % % نفأضحى من البعاد هلالا % % 7(@)(@@) % أحسنت غربة النوى وأساءت % % منظرا يوم بينهم وفعالا % % 8(@)(@@) % كلل لا تحط عن أظهر العي % % س وعيس لا يشتكين الكلالا 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms180# % % 9(@)(@@) % و نوى يترك الغليل مقيما % بمها تبعث الدموع عجالا % % 10(@)(@@) % لست أرعى الهوى المصونإذا لم % % يك دمعيما عشتفيه مذالا % % PageV01P757 11(@)(@@) % كل يوم نشيم بالشام غيثا % مقبلا نرتجي به الإقبالا % % 12(@)(@@) % فإذا اختال للركاب وللرك % % بان ساروا إلى نداه اختيالا % % 13(@)(@@) % ذكروا معقل السماحفحلوا % % عقل العيس ثم شدوا الرحالا % % 14(@)(@@) % وصلوا السير بكرة وأصيلا % رملا يقطعون فيه الرمالا % % 15(@)(@@) % عل من نائل الأمير علي % من غدا منهم يروم النوالا % % 16(@)(@@) % ملك حاز قمة الفخر لما % % عد للفخر من عدي رجالا % % 17(@)(@@) % أصبحوا في الندى غيوثا و في الرو % % ع ليوثا و في الحلوم جبالا % % 18(@)(@@) % لحظ الشرق عادل منه يهدي % % لقناة الإسلام فيه اعتدالا % % 19(@)(@@) % و همام يرضي السيوفإذا هم % م بأمر و يسخط الأموالا % % 20(@)(@@) % سار يهديمع الشمالإليه % % أرجا طيب الصبا والشمالا % % PageV01P758 21(@)(@@) % ملك طاعه الحتوف فلو شا % % ء لبث الحتوف والآجالا % % 22(@)(@@) % و ثنى خيله إلى الغرب سعيا % لابسات من العجاج جلالا % % 23(@)(@@) % فأحل الصدور منها لصدر الر % رمح بأسا و حرر الأكفالا % % 24(@)(@@) % يا مجيب الإسلام حين دعاه % % و مقيل الإسلام حين استقالا % % 25(@)(@@) % وعد الروم سيف بأسك وعدا % عدموا الخلف بعده والمطالا % % 26(@)(@@) % نزلوا منزلا من الحين ضنكا % فجعلت الردى لهم أنزالا % % 27(@)(@@) % و تبوأت بالشآم محلا % كل يوم يزداد منك جمالا % % 28(@)(@@) % وطن مشرق الفضاء وروض % مستظل من الغصون ظلالا % % 29(@)(@@) % نلتهإذ غدت رماحك سورا % حول سور له أبى أن ينالا % % 30(@)(@@) % دائر لا يخاف دائرة السو % % ء إذا اغتاله العدو اغتيالا % % PageV01P759 31(@)(@@) % ببروج وصلن بالماء في الأر % % ض وألحقن بالسماء اتصالا % % 32(@)(@@) % فهي مثل السحاب عانقت الأف % قو جرت على الثرى أذيالا % % 33(@)(@@) % و قلاع مثل الهوادج حسنا % جاعلات مطيها الأجيالا % % 34(@)(@@) % و إذا اختالت السحاب عليها % % خلته كلة لها وحجالا % % 35(@)(@@) % كل ملمومة متى ظن طاغ % أنها معقل رآها عقالا % % 36(@)(@@) % مشرفات على البحور تراهن % ن يمينا من دونها وشمالا % % 37(@)(@@) % لامعات كأنها الشمس أجرت % % ذهبا ذائبا عليها فسالا % % 38(@)(@@) % و كأن العيون تلحظ منهن % ن عذارى تبرجت أشكالا % % 39(@)(@@) % حرم لامرئ حماهو إن كا % % ن دم الناكثين فيه حلالا % % 40(@)(@@) % قصدتني على البعاد يداه % % بأياد تفيد جاها ومالا % % PageV01P760 41(@)(@@) % فبها عدت أنضر الناس عودا ؛ % و 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms181# بها صرت أحسن الناس حالا % % 42(@)(@@) % أطلقت بالثناء فيه لساني % % فارتجلت الثناء فيه ارتجالا % % PageV01P761 البحر : - 1(@)(@@) % وصف ابن يوسف لي بكل فضيلة % و رأيتهفرأيت منه أثولا % % 2(@)(@@) % ساءلته عن علمهفكأنما % % ساءلت عن سكانه ربعا خلا % % 3(@)(@@) % و عجبت من وسخ على أطرافه % % لو أعملت فيه المبارد ما انجلى % % 4(@)(@@) % هذا الأديب برغم أهل بلاده % % و الشاعر الداعي إلى سنن العلا % % 5(@)(@@) % و يقالإن الشيخ يأكل دائبا % عضلا يداوي منه خطبا معضلا % % PageV01P762 البحر : - 1(@)(@@) % و هي الشموس فإن رأين طوالعا % % يضحكن في الفودين عدن أوافلا % % 2(@)(@@) % و لطالما عقل الشباب شواردا % منهن لي في ظله وعقائلا % % 3(@)(@@) % يمسحن جعد غدائريو كأنما % % يمسحن بالمسك الذكي سلاسلا % % 4(@)(@@) % بيني وبين الجاهلين ضغائن % خزر النواظر يقتضين طوائلا % % 5(@)(@@) % فلئن عفوت لأسدين عوارفا ؛ % و لئن سطوت لأسدين زلازلا % % 6(@)(@@) % صهلا بشعري مقرفين فكذبا % % إن المقارف لا يكن صواهلا % % 7(@)(@@) % و تناهبا منه دمي فرجعن دا % % مية النحور عواطلا % % 8(@)(@@) % في غارة لم تسق ظمآن الثرى % % علقا ولم تغش السماء قساطلا % % 9(@)(@@) % كانت لأشراف الملوك حلائلا % فغدت لأنباط العراق حلائلا % % 10(@)(@@) % الدهر يعلم أنني زاحمته % % بأشد منه في الشدائد كاهلا % % PageV01P763 11(@)(@@) % و هززت إبراهيم فيهو إنما % % أعملت فيه مهندا أو عاملا % % 12(@)(@@) % و السيف ليس تهزه يد فارس % إلا إذا كان الحسام القاصلا % % 13(@)(@@) % رد السماح أنيقة أيامه % % حتى اشتبهن أواخرا وأوائلا % % 14(@)(@@) % و أحله الشرف الرفيع هلاله % % فغدا وراح به هلالا ماثلا % % 15(@)(@@) % بحر لقيت نوالهفتلاعبت % بي غمرة لم ألق فيها ساحلا % % 16(@)(@@) % و فتىإذا هز اليراع حسبته % % لمضاء عومتهيهز مناصلا % % 17(@)(@@) % من كل ضافي البرد ينطق راكبا % بلسان حاملهو يصمت راجلا % % 18(@)(@@) % و أرى الدروع معاقلا فإذا انتقى % % آراءه يوما فلسن معاقلا % % 19(@)(@@) % يرمي الخطوب بصائبات عزائم % أضحت لها جنن الخطوب مقاتلا % % 20(@)(@@) % و لكم شجاع في النوائب لم يكن % % لحمائل السيف المهند حاملا % % PageV01P764 21(@)(@@) % فرضت عليه المكرمات فرائضا % للمجد أداهاو زاد نوافلا % % 22(@)(@@) % لولاه طال على المدائح أن ترى % % طولا تلوذ بظله أو طائلا % % 23(@)(@@) % فإذا لقيت أخا المكارم قائلا % لم تلق إبراهيم إلا فاعلا % % 24(@)(@@) % و إذا السحاب رأت أنامل كفه % تنهل ودت أن تكون أناملا % % 25(@)(@@) % كم روضة للمجد زاهرة الربا % % ظمئت 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms182# إليك فكنت غيثا هاطلا % % 26(@)(@@) % لما تبسم في فنائك نورها % % أجريت بالمعروف فيه جداولا % % 27(@)(@@) % فاضت علي سجال كفك بالندى % % حتى ظننتك بالغمام مساجلا % % 28(@)(@@) % فوقفت نفسي عن سواك ومنطقي ؛ % إن المطالب يختلفن منازلا % % 29(@)(@@) % لله أنت إذا برقت لآمل % و سقيت أخلاف السحابة آملا % % 30(@)(@@) % أخلفت سحبان الفصاحة وعده % % و غدوت تؤثر بالعناية باقلا % % PageV01P765 31(@)(@@) % حليت بعض الناس من ألفاظه % % حليا يروح به المحلى عاطلا % % 32(@)(@@) % وحرمته الراح التي روقتها % % وسقيته بالكره سما قاتلا % % 33(@)(@@) % و الخصم يعجز عن جدالك هيبة % حتى ينوب الشعر عنه مجادلا % % 34(@)(@@) % فيكون طورا في مديحك صادقا % و يكون طورا في عتابك عاذلا % % 35(@)(@@) % و من العجائب أن تراه هواجرا % و لقد بعثت به إليك أصائلا % % 36(@)(@@) % لا تأنفن من العتاب و قرصه % % فالمسك يسحق كي يزيد فضائلا % % 37(@)(@@) % ما حرق العود الذي أشبهته % % خطأو لا عم البنفسج باطلا % % 38(@)(@@) % حاشاك أن يلقى القريض سمائما % و نداك يلقاه صبا وشمائلا % % 39(@)(@@) % ما كنت إلا السمهري هززته % % فوجدته لدن المهزة ذابلا % % 40(@)(@@) % بغرائب مثل السيوف إضاءة % وجدت من الفكر الدقاق صياقلا % % PageV01P766 41(@)(@@) % فلو استعار الشيب بعض جمالها % % أضحى إلى البيض الحسان وسائلا % % 42(@)(@@) % جاءتك بين رصينة ودقيقة % تهدي إليك مطارفا وغلائلا % % PageV01P767 البحر : - 1(@)(@@) % نطقت بفضل أبي شجاع آية % وسمت مفاوز أرضه بجداول % 2(@)(@@) % وطىء الصفا طيا آن فاغتدى % % ريان يضحك عن صفاء مناهل % 3(@)(@@) % و استنبط الشرب الذي غنيت به % % شيراز عن صوب الغمام الهاطل % % 4(@)(@@) % هي آية لك ذاع من إعجازها % % ما ذاع من موسى الكليم الفاضل % % 5(@)(@@) % ورد شفيت به البلاد من الصدا % % و شملتها منه بري شامل % % 6(@)(@@) % و هديت منه لنعمة مكنونة % فأثرتها من تربة وجنادل % % PageV01P768 البحر : - 1(@)(@@) % محلك مثل الغاب ليس يرام % و جارك مثل النجم ليس يضام % 2(@)(@@) % و غيمك ذو برقين ينهل عنهما % % دم ليس يرقى صوبه وغمام % 3(@)(@@) % أقمنا نرى روض المحامد يجتلى % % عليكو آفاق السماح تغام % 4(@)(@@) % فنحن حلال في حريمك للغنى % % و نحن على الأيام فيه حرام % 5(@)(@@) % بك انتظم المجد الشتيتو إنما % % مساعيك للمجد الشتيت نظام % 6(@)(@@) % رميت فأصميت العدو ولم يزل % % لبأسك في حب القلوب سهام % 7(@)(@@) % فأغراضك اللاتي تصاب مقاتل % و أسهمك 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms183# اللاتي تصيب حمام % 8(@)(@@) % رأى من أخيك الشام أكرم شيمة % و أصدق برق في المحول يشام % 9(@)(@@) % تلا قسما في موقف ظن أنه % % تلاقى عليه يذبل وشمام % 10(@)(@@) % تحيت بريا القرب منه جوانح % و بل بماء الوصل منه أوام % PageV01P769 11(@)(@@) % هي الدولة الغراء شمر منكما % % لضيم عداها ناصر وحسام % 12(@)(@@) % أرى الخائن المغرور نام بأرضكم % % كأن المنايا الحمر عنه نيام % 13(@)(@@) % تسنم أعلام الديارو أنتم % لمن حل فيها غارب وسنام % 14(@)(@@) % فشق على الماضين من عظمائكم % % و هم رمم في تربها وعظام % 15(@)(@@) % منازل مرفوع لحاضركم بها % % قباب وللبادي الأغر خيام % 16(@)(@@) % تحن إلى القوم الذين ترحلوا % % و ترجف بالقوم الذين أقاموا % % 17(@)(@@) % تهلل منها الغيثو هي عوابس % و أسفر منها الصبحو هي ظلام % 18(@)(@@) % فعودا ليحتل الندى في خلالها % % و يرحل لؤم حلها ولئام % 19(@)(@@) % و لا تمكنوه من ذمام سيوفكم % % فليس له عند السيوف ذمام % 20(@)(@@) % فلا صلح حتى تستطار سواعد % و تسقط أيد في اللقاء وهام % PageV01P770 21(@)(@@) % و حتى ترود الشرق ذات همائم % يصرفها ساري الهموم همام % 22(@)(@@) % و تذكى على الهرماس نار قبيلة % لحمرتها في الخافقين ضرام % 23(@)(@@) % و تشرق من شرقي دجلة بالقنا % % ضحاضح أنتم سيلها وإكام % 24(@)(@@) % و تقرب من آجامها الأسد عنوة % فتقتحم الآجام وهي كرام % 25(@)(@@) % و تلفحه ريح الأراقمإنها % % سموم على أعدائها وسمام % 26(@)(@@) % فتغبر من تلك الفجاج مواقف % و تحمر من تلك المياه جمام % 27(@)(@@) % كأيام سيف الدولة الغر إنها % % سمات على وجه الزمان وشام % 28(@)(@@) % فحينئذ يصفو السماع لسامع % و ينساغ للشرب العطاش مدام % 29(@)(@@) % و إن أحفظت منكم أسود حفائظ % فردوا القنا والبيض وهي حطام % 30(@)(@@) % فإن سجال الدهر في الناس قبلكم % % و لا عارنقص مؤلم وتمام % PageV01P771 31(@)(@@) % فطورا لكم في العيش رحب منازل ؛ % وطورا لكم بين السيوف زحام % 32(@)(@@) % و أنتم على أكباد قوم حرارة % و برد على أكبادنا وسلام % PageV01P772 البحر : - 1(@)(@@) % سوداء لم تنتسب لحام % و لم ترم ساحة الكرام % 2(@)(@@) % كأنما تحتها ثلاث % مقربات من الحمام % 3(@)(@@) % يلعب في جسمها لهيب % لعب سنا البرق في الظلام % 4(@)(@@) % لها كلام إذا تناهت % % غير فصيح من الكلام % 5(@)(@@) % و هيو إن لم تذق طعاما % مملوءة البطن من 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms184# طعام % 6(@)(@@) % لم يخل من رفدها نديم % يوم خمار و لا ندام % 7(@)(@@) % و لي إذا الضيف عاد أخرى % % مصرع حولها سوامي % % 8(@)(@@) % عظيمة إن غلت أذابت % % بغليها يابس العظام % 9(@)(@@) % كأنما الجن ركبتها % % على ثلاث من الإكام % 10(@)(@@) % لها دخان تضل فيه % % عجاجة الجحفل اللهام % PageV01P773 11(@)(@@) % كأنما النار ألبستها % % معصفرات من الضرام % 12(@)(@@) % و لم يزل مالنا مباحا % من غير ذل ولا اهتضام % 13(@)(@@) % نأخذ للقوت منه سهما % و للندى سائر السهام % PageV01P774 البحر : - 1(@)(@@) % أخلق بعاتب رشده أن يقدما % % و بواصل من غيه أن يصرما % % 2(@)(@@) % و بما تساقط من رياده مشيبه % % في حالك الفودين أن يتضرما % % 3(@)(@@) % مثلت له مرآتهفبكى و كم % % مثلت له مرآتهفتبسما % % 4(@)(@@) % لحظ السواد مودعا فأنابه % % نعسا ومال على البياض مسلما % % 5(@)(@@) % ما كان أول من رأى حرم النهى % % فنضا به برد الحرام وأحرما % % 6(@)(@@) % أما وحلي العارضين ثقافه % % فلنحكمن عليه أن يتقوما % % 7(@)(@@) % كان الهوى صبحا بليل شبابه % % فدجى بإصباح المشيب وأظلما % % 8(@)(@@) % و المرء ما وجد الشبيبة واجد % مثر فإن عدم الشبيبة أعدما % % 9(@)(@@) % ما راع أفئدة الدمى بصدوده % % عنهنإلا وهو من أرب الدمى % % 10(@)(@@) % هذي الخيامو ذا العقيق ولن يرى % % أبدا بأفنية الخيام مخيما % % PageV01P775 11(@)(@@) % و لرب خيل بطالة خليتها % % تطأ الملامة في الهوى واللوما % % 12(@)(@@) % و معصفر الخد الأسيل صبحته % % بمعصفر الناجود ينضح عندما % % 13(@)(@@) % و أغن دافعت الهوى بوصاله % % و شقيت في حبيه كيما أنعما % % 14(@)(@@) % ينمى العفاف إلي مغتربا كما % % ينمى السماح إلى الأمير إذا انتمى % % 15(@)(@@) % الآن جنبني الزمان أذاته % % و أعاد لي بؤسي الحوادث أنعما % % 16(@)(@@) % بأغر يمنحني السبيك المقتنى % % كرما و أمنحه الحبيك المعلما % % 17(@)(@@) % و قريب مجنى العرف إلا أنه % % ترمي به الهمات أبعد مرتمى % % 18(@)(@@) % تعتد نجدته عدي عدة % و تخاله صيد الأراقم أرقما % % 19(@)(@@) % كالغيث يحيي إن همى والسيل يردي % % إن طمى والدهر يصمي إن رمى % % 20(@)(@@) % شتى الخلال يروح إما سالبا % نعم العدا قسرا و إما منعما % PageV01P776 21(@)(@@) % مثل الشهاب أصاب فجا معشبا % بحريقهو أضاء فجا مظلما % 22(@)(@@) % أو كالغمام الجون إن بعث الحيا % % أحياو إن بعث الصواعق أضرما % % 23(@)(@@) % أو كالحسامإذا تبسم متنه % % عبس الردى في حده فتجهما % % 24(@)(@@) % كلف بدر الحمد 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms185# يبرم سلكه % % حتى يرى عقدا عليه منظما % % 25(@)(@@) % و يلم من شعث العلى بشمائل % أحلى من اللعس الممنع واللمى % % 26(@)(@@) % و فصاحة لو أنه ناجى بها % % سحبان أو قس الفصاحة أفحما % % 27(@)(@@) % لفظ يريك بديعه حلي الدمى % % طلقا و نوار الربا متبسما % % 28(@)(@@) % يصغى إليه مع الظمافكأنما % % يسقى به صرف المدام على الظما % % 29(@)(@@) % كم مطلب قصرت يدي عن نيله % % فجعلته سببا إليه وسلما % % 30(@)(@@) % لولاه لم أمدد بعارفة يدا % تندى و لم أفغر بقافية فما % % PageV01P777 31(@)(@@) % لا يخطبن إلي حلي مدائحي % % أحد فقد وجد السوار المعصما % % 32(@)(@@) % تلك المكارم لا أرى متأخرا % أولى بها منهو لا متقدما % % 33(@)(@@) % عفو أظل ذوي الجرائم ظله % % حتى لقد حسد المطيع المجرما % % 34(@)(@@) % و ندى إذا استمطرت عارض مزنه % % حن الحيا الربعي فيه وأرزما % % 35(@)(@@) % و لرب يوم لا تزال جياده % % تطأ الوشيج مخضبا ومحطما % % 36(@)(@@) % معقودة غرر الجياد لنقعه % % وجحولها مما يخوض به الدما % % 37(@)(@@) % يلقاك من وضح الحديد موضحا % طورا و من رهج السنابك أدهما % % 38(@)(@@) % و تريك في عبث الصبا أياته % % طيرا على أمواج بحر حوما % % 39(@)(@@) % أقدمت تفترس الفوارس جرأة % فيه وقد هاب الردى أن يقدما % % 40(@)(@@) % و الندب من لقي الأسنة سافرا % و ثنى الأعنة بالعجاج ملثما % % PageV01P778 41(@)(@@) % إسلم أبا الهيجاء للشرف الذي % % نجمت علاك به فكانت أنجما % % 42(@)(@@) % و الق الهوى غضا بفطركو المنى % % مجموعة لكو السرور متمما % % 43(@)(@@) % حتى تريك أبا العلاء خلاله % % كأبي العلاء نجابة وتكرما % % 44(@)(@@) % قد كنت ألقى الدهر أعزل حاسرا % فلقيته بك صائلا مستلئما % % 45(@)(@@) % ما عذر من بسطت يمينك كفه % % ألا ينال بها السها والمرزما % % 46(@)(@@) % أنت السماء فمن جذبت بضبعه % % كان الورى أرضا و كان لهم سما % % PageV01P779 البحر : - 1(@)(@@) % ليالينا بأحياء الغميم % سقيت ذهاب مذهبة الغيوم % 2(@)(@@) % مضت بك رأفة الأيام فينا % % و غفلة ذلك الزمن الحليم % 3(@)(@@) % و غرة مخطف الكشحين يرمي % % فؤاد محبه عن طرف ريم % 4(@)(@@) % و كنا منك في جنات عيش % وفت حسنا بجنات النعيم % 5(@)(@@) % رياض محاسن وسنا شموس % و طل دساكر وجنى كروم % 6(@)(@@) % و أجفان إذا لحظت جسوما % خلعن سقامهن على الجسوم % 7(@)(@@) % و بين ملاعب الديرين مغنى % % غنيت به ودار أخ 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms186# حميم % 8(@)(@@) % يبيت البرق يذكرني خياما % ضربن بها على كرم وخيم % 9(@)(@@) % و ساجية الظلال مقرطات % ظروف الراح من زنج وروم % 10(@)(@@) % و هل يشتاق ظل الكرم عاف % ثنى عطفيه في ظل الكريم % PageV01P780 11(@)(@@) % محت رسم الكرى عن مقلته % % رواسم لا تمل من الرسيم % 12(@)(@@) % ترومو قد فرعن بنا فروعا % من الفياض طيبة الأروم % 13(@)(@@) % إذا طافت بعبد الله لاقت % % سمات الحمد في الوجه الوسيم % 14(@)(@@) % أغر تشق غرته الدياجي % % وضوح الصبح في الليل البهيم % 15(@)(@@) % تقيل أوليهفجاء يجري % % على نهج السماح المستقيم % 16(@)(@@) % عطاء قد من تلك العطايا % % و حلم عد من تلك الحلوم % 17(@)(@@) % لك القلم الذي يضحي ويمسي % % به الإقليم محمي الحريم % 18(@)(@@) % هو الصل الذي لو عض صلا % لأسلمه إلى ليل السليم % 19(@)(@@) % دعا الأطراففاجتمعت إليه % % كما اجتمع السوام إلى المسيم % 20(@)(@@) % أخو حكم إذا بدأت وعادت % % حكمن بعجز لقمان الحكيم % PageV01P781 21(@)(@@) % ملكت خطامهافعلوت قسا % برونقها وقيس بن الخطيم % 22(@)(@@) % نجوم لا تغور قمن درار % يسار بضوئهن ومن رجوم % 23(@)(@@) % كحلي الخود مؤتلف النواحي % % و وشي الروض مختلف الرقوم % 24(@)(@@) % أراك الله ما تهوى وشيبت % % لك النعماء بالحظ الجسيم % 25(@)(@@) % غمام مثل جودك في انسكاب % و عيد مثل وجهك في قدوم % 26(@)(@@) % و دار شيدت بعظيم قدر % يهين كرائم النشب العظيم % 27(@)(@@) % يطوف المادحون بعقوتيها % % طوافهم بزمزم والحطيم % 28(@)(@@) % تقاصرت القصور لها فأضحت % % و قد طلن الكواكب كالرسوم % 29(@)(@@) % فمن شرف على الجوزاء تنبي % % فوارعه عن الشرف القديم % 30(@)(@@) % و من غرف تضيء الليل حسنا % فتحسبها النجوم من النجوم % PageV01P782 31(@)(@@) % جزيتك بالذي تولي ثناء % يسرك بين سار أو مقيم % 32(@)(@@) % و ما ذمي لمحمود السجايا % % و ما حمدي لذي الخلق الذميم % 33(@)(@@) % و ما زالت رياح الشعر شتى % % فمن ريا الهبوب ومن سموم % 34(@)(@@) % تحيي الصاحب الطلق المحيا % % و تعلن شتم ذي الوجه الشتيم % 35(@)(@@) % منحتك من محاسنها ربيعا % مقيم الزهر سيار النسيم % PageV01P783 البحر : - 1(@)(@@) % قصاراك أن تلقى الزمان مسلما % % فليس يعاف الظلم أن يتظلما % % 2(@)(@@) % تغيب عناو انتحتنا سهامه % % و يعجزنا الرامي المغيب إن رمى % % 3(@)(@@) % و لو أنه شخص تحطم بيننا % % قنا الخطأو شيم الحديد مثلما % % 4(@)(@@) % غريت بذم الحادثات لأنني % % أرى فعلها في المكرمات مذمما 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms187# % % 5(@)(@@) % أزلن جبال الأزد عن مستقرها % % و فرقنها في الأرض فذا وتوأما % % 6(@)(@@) % و قد زعزعت منهم ثبيرا وقلعت % % شماما وهزت يذبلا و يرمرما % % 7(@)(@@) % بدور تجلت للعراقفأشرقت % % و أوحش نادي الحصن منها فأظلما % % 8(@)(@@) % تناءوا ولما ينصرم حبل عزهم % % و حاشا لذاك الحبل أن يتصرما % % 9(@)(@@) % فشرق منهم سيد ذو حفيظة % و غرب منهم سيد فتشأما % % 10(@)(@@) % كأن نواحي الجو تنثر منهم % على كل فج قاتم اللونأنجما % % PageV01P784 11(@)(@@) % فإن يصبحوا شتى المواطن للنوى % % فقد صبحوا العلياء عقدا منظما % 12(@)(@@) % تولى ابن فهد و الرجاء يؤمه % % و يسري إلى أوطانه حيث يمما % % 13(@)(@@) % و صاحبت ضيف الهم بعد فراقه % % و ما كنت ألقى الهم إلا توهما % % 14(@)(@@) % أكذب أن النأي حتف متيم % فألفيته حتفا و لست متيما % % 15(@)(@@) % و أكبر أن يبكى على صاحب دما % إلى أن بكت عيني لفرقته دما % % 16(@)(@@) % ألا يا ابن فهد أصبح العرف مجهلا % ببابك مجهولا و قد كان معلما % % 17(@)(@@) % فكن في جوار الله إن سرت آلفا % ظهور المهارى أو حللت مخيما % % 18(@)(@@) % فقد نضبت غدر االكلام وأصبحت % % كعاب القوافي الغر بعدك أيما % % 19(@)(@@) % و ما زلت في اللأواء غيثا وفي الدجى % % شهابا وفي الأحداث جيشا عرمرما % % 20(@)(@@) % نراكإذا كان الندى في قليبه % % رشاء فإن يعل اتخذناك سلما % PageV01P785 21(@)(@@) % شكيت إلى جور الخطوب وظلمها % % كأنيو لم أسفهسفيه تحلما % % 22(@)(@@) % و قد كنت أدعى شاعرا بك مفلقا % فعدت عقيم الفكر بعدك مفحما % % 23(@)(@@) % أمر بأفق اليدرو هو مغيب % أسائل عنه كاسف البال أقتما % % 24(@)(@@) % كأني لم أشج العدو بقربه % % و لم أغشه قبل الصديق مسلما % % 25(@)(@@) % و لم يكسني وشي الثراء مفوفا % و لم أكسه وشي القريض منمنما % % 26(@)(@@) % و لم آخذ الكأس الروية من يد % أناملها تنهل بؤسى وأنعما % % 27(@)(@@) % فليس ينام الدهر حتى أروعه % % بهبة ثعبان إذا هم صمما % % 28(@)(@@) % دهتني الليالي بعدهو لربما % % بعثت عليها منه دهياء صيلما % % 29(@)(@@) % فهل أرين الدهر عني منكبا % بأوبته من بعد ما كر مقدما % % 30(@)(@@) % فهل لبني فهد بن أحمد عودة % يعود بها شمل السماح ملأما % % PageV01P786 31(@)(@@) % ملوكهم حلي المدائح ما اكتسوا % % حلاها وثغر المجد إما تبسما % % 32(@)(@@) % تلفت في أوطانهم فتكلمت % دموعي وهم 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms188# الشوقأن يتكلما % % 33(@)(@@) % فمن ناشد للمكرمات ومنشد % عسى وطن يدنو بهم ولعلما % % 34(@)(@@) % و قد كان يستحبي الزمان خلالها % % حيا منهم غمرا ويفرق ضيغما % % 35(@)(@@) % فشن عليهمو هو سكران خيله % % و لو قد صحا من سكره لتندما % % PageV01P787 البحر : - 1(@)(@@) % أدرها ففقد اللوم إحدى الغنائم % و لا تخش إثما لست فيها بآثم % 2(@)(@@) % فلا عيش إلا في اعتصام بقهوة % يروح الفتى منها خضيب المعاصم % 3(@)(@@) % و لا ظل إلا ظل كرم معرش % تغنيك في قطريه ورق الحمائم % 4(@)(@@) % سماء غصون تحجب الشمس أن ترى % % على الأرضإلا مثل نثر الدراهم % PageV01P788 البحر : - 1(@)(@@) % ذممت زرعك خوفا من مطالبتي % % و الزرع نحلة عام غير مذموم % 2(@)(@@) % فلا عدته من الجوزاء سارية % تبكي عليه بدمع غير مسجوم % 3(@)(@@) % كالدر يجتنب المرزوق ما انتثرت % عقودهو يعادي كل محروم % 4(@)(@@) % حتى تراه وقد مالت دعائمه % % كأنه إلف تكفير وتعظيم % 5(@)(@@) % أو جحفل من جنود الله منتشر % مثل الخناصر منقوش الحيازيم % 6(@)(@@) % يحل بسطة إقليم فإن عصفت % به الصبا تركته جو إقليم % 7(@)(@@) % ما شنو هو ضعيف البطش غارته % % إلا استباح حمى الشم اللهاميم % 8(@)(@@) % يلقى على الحب في أعلى منابته % % كلاكلا نقشت نفش الخواتيم % 9(@)(@@) % إذا استقل أعاد الأرض معدمة % و استودع الت رب نسلا غير معدوم % 10(@)(@@) % أو جذوة كشهاب الجو مشعلة % تطير في معتل منه ومركوم % PageV01P789 11(@)(@@) % إذا انتحته حدتها الريح عاصفة % من كل أوب فأغرتها بتضريم % 12(@)(@@) % تبدو لعينيك حمر من ذوائبها % % كما بدا الفجر محمر المقاديم % 13(@)(@@) % حتى تعود أخا فقر ومسكنة % صفر السريرة من صبر وتسليم % 14(@)(@@) % منعت حبا و لو أعطيت مبتدئا % حب القلوب لما عريت من لوم % PageV01P790 البحر : - 1(@)(@@) % أسلم للأيام أم لا أسلم % و أحمل ظلم الدهر أم أتظلم % 2(@)(@@) % بكيت على شعر أصيب كما بكى % % على مالك لما أصيب متمم % 3(@)(@@) % تعزيت عن نيل الثراء بفضله % و ما معدم أثرى من الفضل معدم % 4(@)(@@) % أجانب فيه لذتي ومكاسبي % % و أهجر فيه النومو الناس نوم % 5(@)(@@) % إذا ما المعاني أومضت لي بروق ها % % و ساعدها وشي الكلام المنمنم % 6(@)(@@) % رأيت التهاب الحلي في جيد غادة % ترائبها من تحته تتبسم % 7(@)(@@) % نظام من السحر الحلال مخيل % لسامعه أن 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms189# الكواكب تنظم % 8(@)(@@) % فلما اغتدى كالسيف أخلص صيقل % ظباهو كالرمح انتحاه مقوم % 9(@)(@@) % و عاذت برياه النفوس كأنه % % نسيم على أيدي الصبا يتنسم % 10(@)(@@) % تحلى به قوم سوايفكذبوا % % و هل يلد الشهب اللوابج أدهم % PageV01P791 11(@)(@@) % و شنت عليه للمجانين غارة % فأصبح نهبا بينهم يتقسم % 12(@)(@@) % هي الغارة العظمى التي بسيوفها % % أبيح حمى الآدابو هو محرم % 13(@)(@@) % أرى الجور قد عم الأنام بأسرهم % فلا عدل إلا للظبا حين تحكم % 14(@)(@@) % أيدفع عن حلي البلاغة معرب % و يرفل في وشي الفصاحة أعجم % 15(@)(@@) % هو النقد المسلوب من غارة الوغى % % و لكنه في غارة الشعر ضيغم % 16(@)(@@) % يفوت الحديد الناب والظفر إن سطا % % فما ضره إن راح وهو مقلم % 17(@)(@@) % دعوا الأنجم الزهر التي أعجزتكم % لمطلعها ما دام للشعر أنجم % 18(@)(@@) % و لا تحفظوا رب الحفاظ لأنه % % حلت لكم أخلاقه وهو علقم % 19(@)(@@) % يمج لكم شهد الكلام لسانه % % و ما مج يوما قبله الشهد أرقم % 20(@)(@@) % رددت سهام الذم عنكم مذمما % و بعض قوافي الشعر سهم مسمم % PageV01P792 21(@)(@@) % رأيتكم موتى فكفكفت غربها % % و هل ناظر الأموات حين تكلم % % 22(@)(@@) % و إن تسألوني قطرة من محاسن % فحوضي من ماء المحاسن مفعم % PageV01P793 البحر : - 1(@)(@@) % أؤنب الشوق فيهمو هو يضطرم % و أستقل دموع العينو هي دم % 2(@)(@@) % لله أي شموس منهم غربت % بغرب و بدور ضمها إضم % 3(@)(@@) % بيض تخبر عنها البيضلا معة % بأنهن نعيم دونه نقم % 4(@)(@@) % أهدت لهن على خوف إشارتنا % % تحية ردها العناب والعنم % 5(@)(@@) % هي الظباء ولي من ربعها حرم ؛ % و هي الشفاءو لي من لحظها سقم % 6(@)(@@) % سقيا المحبين من أهل الحمى ظمأ % برح و سقياه من أجفانها ديم % 7(@)(@@) % و ما تحكم في دار فراقهم % إلا غدت في دموع العين تحتكم % 8(@)(@@) % سلمت ما فعلت غزلان ذي سلم % إذا الكناس الذي حلت به سلم % 9(@)(@@) % يمسي به الحسن والإحسان في قرن % و يصبح الخيم في معناه والخيم % 10(@)(@@) % جادتك مذهبة بالبرق مجلبة % بالرعد تربد أحيانا وتبتسم % PageV01P794 11(@)(@@) % كأنهاو جنوب الريح تجنبها % % بحر يسد فضاء الجو ملتطم % 12(@)(@@) % من اللواتي تقول الأرضإن بسمت % هذي الحياة التي يحيا بها النسم % 13(@)(@@) % كأنها إذ تولتو هي مقلعة % جيش العدو تولى و 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms190# هو منهزم % 14(@)(@@) % عادت حماتهم سفعا خدودهم % كأنما سفعت أبشارها الحمم % 15(@)(@@) % ولت وبيض ابن عبد الله تنشدها % % كالطير روعها من بارق ضرم % 16(@)(@@) % أطفأت بالكر والإقدام نارهم % و قبل كانت على الإسلام تضطرم % 17(@)(@@) % دفعتهم بغرار السيف عن بلد % رحب تدافع فيه سيلك العرم % 18(@)(@@) % فأصبحت من وراء اليم شوكتهم % % و هم من البيض إن جردتها أمم % 19(@)(@@) % غشيتهم برماح ليس بينهم % و بين أطرافهاإل ولا ذمم % 20(@)(@@) % و نلت أمنعهم حصنا و أبعدهم % % فليس تعصمهم من بأسك العصم % PageV01P795 21(@)(@@) % و بات ذو الأمر منهمقد ألم به % من خوف إلمامك المؤذي به لمم % 22(@)(@@) % تروع أحشاءه بالكتبو هو لها % % خوف الردى ورجاء السلم مستلم % 23(@)(@@) % لا يشرب الماء إلا غص من حذر % ولا يهوم إلا راعه الحلم % 24(@)(@@) % الله جاركو الأرماح جائرة % و البيض تأخذ من ألوانها اللمم % 25(@)(@@) % و النقع ليل يكف الطرف غيهبه % % و المرهفات كقرن الشمس تزدحم % 26(@)(@@) % أضحى بنجدتك الإسلام معتصما % و أنت بالله والهندي معتصم % 27(@)(@@) % تزجي القناو المنايا فيه كامنة % فتحطم الشرك أحيانا و ينحطم % 28(@)(@@) % أعجب بهحين يدعوه لملحمة % أصم ليس به عن دعوة صمم % 29(@)(@@) % كأنهاو العوالي ملء ساحتها % % مغارس الخط فيها للقنا أجم % 30(@)(@@) % فالغزو منتظم و الفيء مقتسم % والدين مبتسم والشرك مصطلم % PageV01P796 31(@)(@@) % يا سائلي عن علي كيف شيمته % انظر إلى الشكر مقرونا به النعم % 32(@)(@@) % مدح يغض زهير عنه ناظره % % و نائل يتوارى عنده هرم % 33(@)(@@) % و باسط يده بالعرف مطلقها % % بالحتف ينعم أحيانا وينتقم % 34(@)(@@) % مشهر مثل بيت الله نعرفه % % بفضل ما ذاع عنه العرب والعجم % 35(@)(@@) % إذا بدا الصبحفهو الشمس طالعة ؛ % و إن دجى الليلفهو النار والعلم % 36(@)(@@) % لا يستعير له المداح منقبة % و لا يقولون فيه غير ما علموا % % 37(@)(@@) % رأى السماح فطيما فاشرأب له % % و خيرهم من رآهو هو محتلم % 38(@)(@@) % رحب على آمليه ظل رحمته % و ليس بينهم قربى و لا رحم % 39(@)(@@) % عمت أياديهإذ عم الحيا بلدا ؛ % إن التي عمت الدنيا هي الكرم % 40(@)(@@) % فما نباليإذا فزنا بديمته % أن يمسك الغيث أو أن تهلك الديم % PageV01P797 41(@)(@@) % هو الحيا والغنى ما انهل عارضه % % و هو الردى ما ارتدى بالسيف والعدم % 42(@)(@@) % رمى 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms191# الصليب وأبناء الصليبفلم % % تغمد صوارمه إلا وهم رمم % 43(@)(@@) % بالبيض تنكرها الأغماد مغمدة % و الجرد تعرفها الغيطان والأكم % 44(@)(@@) % لا تخلع العذر عنها عند أوبتها % % و لا تنفس عن أوساطها الحزم % 45(@)(@@) % كأنما نتجت للحرب مسرجة % مركبات على أفواهها اللجم % 46(@)(@@) % يا صارم الدينإن الدين قد علقت % كفاه منك بحبل ليس ينصرم % 47(@)(@@) % أشيم عفوك علما أن ستنشره % % علي تلك السجايا الغر والشيم % 48(@)(@@) % كان انصرافي جرما لا كفاء له % % عنديو أي لبيب ليس يجترم % 49(@)(@@) % رأي هفا هفوة زلت لها قدمي % % و ما هفا الرأيإلا زلت القدم % 50(@)(@@) % هو اضطرار أزال الاختيارو هل % % يختار ذو اللب ما يردي وما يصم % PageV01P798 51(@)(@@) % و كيف يجتنب الظمآن مورده % عمدا إذا راح وهو البارد الشبم % 52(@)(@@) % صفحا فلو شق قلبي عن صحيفته % % لظل يقرأ منه الخوف والندم % 53(@)(@@) % جاءتك كالعقد لا تزري بناظمها % % حسنا و تزري بما قالوا وما نظموا % % 54(@)(@@) % و الشعر كالروض ذا ظام وذا خضل % و كالصوارم ذا ناب وذا خذم % 55(@)(@@) % أو كالعرانين هذا حظه خنس % مزر عليهو هذا حظه شمم % PageV01P799 البحر : - 1(@)(@@) % كيف خلاصي من العراقو قد % % آثرت فيها معادن الكرم % 2(@)(@@) % رأيت فيها خلاعة وصلت % أطرافها بالعلوم والحكم % 3(@)(@@) % مجالس يرقص القضاة بها % % إذا انتشوافي مخانق البرم % 4(@)(@@) % كأنهم من ملوك حمير ما % % أوفت أكاليلهم على اللمم % 5(@)(@@) % و صاحب يخلط المجون لنا % % بشيمة حلوة من الشيم % 6(@)(@@) % تخضب بالراح شيبهعبثا % أنامل مثل حمرة العنم % 7(@)(@@) % حتى تخال العيون شيبته % % شيبة فعلان خضبت بدم % 8(@)(@@) % إذا سقى الله منزلا فسقى % % بغداد ما حاولت من الديم % 9(@)(@@) % يا حبذا صحبة العلوم بها % % و العيش بين اليسار والعدم % PageV01P800 البحر : - 1(@)(@@) % غراء تنشر للحيا أعلاما % عم البلاد صنيعها إنعاما % % 2(@)(@@) % مرت بظمآن الثرى و بروقها % % تشرى و أدمعها تفيض سجاما % % 3(@)(@@) % مثل المحب ترقرقت عبراته % % و الشوق يذكي في حشاه ضراما % % 4(@)(@@) % فغدت عيون النور فيه كأنها % % مقل ترى طيب الغموض حراما % % 5(@)(@@) % أهدى الحيا للورد في شجراته % % خجلا و زاد اليا سمين غراما % % 6(@)(@@) % و تشققت قمص الشقيقفخلته % في الروضكاسات ملئن مداما % PageV01P801 البحر : - 1(@)(@@) % هل الحذق إلا لعبد الكريم % حوى فضله حادثا عن قديم % 2(@)(@@) % إذا لمع البرق 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms192# في كفه % أفاض على الوجه ماء النعيم % 3(@)(@@) % جهول الحسامو لكنه % % يروح ويغدو بكفي حليم % 4(@)(@@) % له راحة سيرها راحة % تمر على الوجه مر النسيم % 5(@)(@@) % فلو كانمن قبحه أربد % % لعاد من الحسن صافي الأديم % 6(@)(@@) % نعمنا بخدمته مذ نشا % % فنحن به في نعيم مقيم % 7(@)(@@) % و كم قد سكنا إلى غيره % % فكنا به في عذاب أليم % PageV01P802 البحر : - 1(@)(@@) % هم صرموا حبل الهوى فتصرما ؛ % و هم أمروا الأحشاء أن تتضرما % % 2(@)(@@) % تنادوا لتفريق الفريقفأصبحت % مدامعنا تندى لفرقتهم دما % % 3(@)(@@) % سلام على من سار قلب محبه % % إليهفلم يرجع صحيحا مسلما % % 4(@)(@@) % حبيب حمانا الكاشحون عناقه % % عشية راح الحي من أبرق الحمى % % 5(@)(@@) % يحل عقود الدر دمعا ومنطقا % و ينظمها حليا عليه ومبسما % 6(@)(@@) % أماط عن العذب اللثام لثامه % % فعاد بديباج الحياء ملثما % % 7(@)(@@) % و كلمني جفناه بالدمع خفية % فهم غليل الشوق أن يتكلما % % 8(@)(@@) % فراق شربنا الموت صرفا بكأسه % فيا طيبه لو كان صابا وعلقما % 9(@)(@@) % وناعمة تثنى على حسن قدها % % إذا ما ثنى نعمة أو . . . . % 10(@)(@@) % دعتني لشرب الجاشرية بعدما % % توسدت ورد الزند رودا مهوما % % PageV01P803 11(@)(@@) % فقلت أديري حلهاأو حرامها % % فليس الحرام من يديك محرما % % 12(@)(@@) % شربنا على الإحسان والحسن ليلة % رأينا بها الإحسان والحسن توأما % % 13(@)(@@) % و رطب لآلي الحلي لما تبسمت % إليه مصابيح البروق تبسما % % 14(@)(@@) % تضوع تحت القطرحتى كأنما % % غدا القطر يسقيه الرحيق المقدما % % 15(@)(@@) % و ديم صوب المزن فيهكأنه % % نوال أبي إسحاق صاب فديما % % 16(@)(@@) % أغر يراه الناس غرة دهرهم % إذا كان دهماء البرية أدهما % % 17(@)(@@) % جواد لو استسقيت ماء شبابه % % لحن به نوء عليك وأرزما % % 18(@)(@@) % إذا ما سقت يمناه ريا و قبلت % توهمت يمناه الحطيم وزمزما % % 19(@)(@@) % يصول به فرد إذا ما تنكرت % % صروف الليالي كان جيشا عرمرما % % 20(@)(@@) % إذا غمزت آراؤه البغي غمزة % تقوم فيها ميله وتحطما % % PageV01P804 21(@)(@@) % أيدري الغبيان اللذان تناهبا % % محاسن شعري أي نهب تقسما % % 22(@)(@@) % و أي عقود خضت سبعة أبحر % لجوهرها المنثور حتى تنظما % % 23(@)(@@) % أبيت له سلم السهادإذا عرا % % و حرب الكرى حتى يصح ويسلما % % 24(@)(@@) % فيصدر عن راووق فكر كأنه % % يروق جريالا من الخمر عندما % % 25(@)(@@) % فلما غدا عضبا صقيلا وذابلا % خطيرا و ملموم السراة مسوما % % 26(@)(@@) % و 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms193# ثقب للأعناق درا مفصلا % و نشر للأعطاف وشيا مسهما % % 27(@)(@@) % تهضمه ذئبان لم يريا له % % أخا ثقة يحميه أن يتهضما % % 28(@)(@@) % مغيرانلو طافا على حين غفلة % من الناسبالبيت الحرام لأحرما % % 29(@)(@@) % لقد قصرت أيديهما عن مناله % % زمانا و لكن صيرا البهت سلما % % 30(@)(@@) % فلو ضمه بين السماكين معقل % و دافع عنه الحين لم ينج منهما % % PageV01P805 31(@)(@@) % و لو منعته أن يضام جهنم % لخاضا إليه مقدمين جهنما % % 32(@)(@@) % لقد ظلما من كل غيداء حرة % كلاما لو اسطاع الكلام تظلما % % 33(@)(@@) % عذارى فمن مشغوفة بحليلها % % متيمة تشتاق منه متيما % % 34(@)(@@) % و معصومة إن عاينت عين ريبة % تلاحظها غطت بنانا ومعصما % % 35(@)(@@) % إذا احتازها البعل الجديد معرسا % أقامت على البعل المفارق مأتما % % 36(@)(@@) % سبينفباشرن المحارم عنوة % و عز عليها أن تباشر محرما % % 37(@)(@@) % و ما لمس المغرور شوكة عقرب % و لكنه من غرة فر أرقما % % 38(@)(@@) % و أخلق بكف لا تكف بنانها % % عن الرقش أن ترفض لحما وأعظما % % 39(@)(@@) % يمين الفتى عضو عليه مكرم % فلا تمتهن عضوا عليك مكرما % % 40(@)(@@) % لعل وزير الملك يحكم بيننا % % فيصبح فينا مجهل الأمر معلما % % PageV01P806 41(@)(@@) % و إني لأرجو منه صبح قضية % يمزق جلبابا من الشك مظلما % % 42(@)(@@) % إذا ما بلوت الصابئين وجدتهم % % فريقينصبا بالسماح ومرغما % % 43(@)(@@) % سحائب معروف إذا المحل أقبلت % % سنوه وأقمار إذا الخطب أظلما % % 44(@)(@@) % و كتاب ملك لا تطيش سهامهم % % إذا فوقوا للحادث النكر أسهما % % 45(@)(@@) % دعوت أبا إسحاق للعدل منصفا % و رب فتى يدعوه للبذل منعما % % 46(@)(@@) % و شيمته أن يستهل لظالم % إذا لاذ مظلوم به متظلما % % PageV01P807 البحر : - 1(@)(@@) % أبا إسحاق يا جبلي % % ألوذ به ومعتصمي % % 2(@)(@@) % و يا سيفي أصول به % و يا حلي ويا حرمي % % 3(@)(@@) % أرقت دميو أعوزني % % سليل الكرم والكرم % 4(@)(@@) % و ما عدمي لفقد الما % % للكن فقده عدمي % % 5(@)(@@) % و بين يدي مخجلة % سواد القار والظلم % 6(@)(@@) % ترى اللهوات تحجبها % % إذا وقفت حيال فمي % % 7(@)(@@) % فلست أسيغها إلا % كلون الورد والعنم % 8(@)(@@) % فشيء من دم العنقو % % د أجعله مكان دمي % % PageV01P808 البحر : - 1(@)(@@) % لما مضى اليوم حميدا فانصرم % و مد سجفيه الظلام المدلهم % 2(@)(@@) % ملنا إلى فلقة مأثور خذم % يلقى بها فلقة صيخود أصم % 3(@)(@@) % فيبسمان في اللقاء عن ضرم 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms194# % % يطير كالبرق خفا ثم اكتتم % 4(@)(@@) % و تارة يسقط في بال أحم % فيجتبيه بقضيب كالقلم % % 5(@)(@@) % تأخذه أزرق كالخد لطم % حتى إذا ولد نارا تضطرم % 6(@)(@@) % قمنا بها نهتك أستار الظلم % و بيبنا ذات ضجيج تختصم % 7(@)(@@) % إن نام غزلان الصريم لم تنم ؛ % نقرعها بين الوهاد والأكم % 8(@)(@@) % قرع النواقيس إذا الصبح ابتسم % % تؤم مخلوع العذار حيث أم % 9(@)(@@) % أبيض مسود الخلال والشيم % % له على الصحب أياد وكرم % 10(@)(@@) % و نعم هن على الوحش نقم % أسرع قبل الشد من سيل العرم % PageV01P809 11(@)(@@) % يقدمنا إلى الكناس المكتتم % مسائلا عنه الصباو هي تنم % 12(@)(@@) % حتى إذا الشرب تراءى من أمم % حيران قد ألبسه الذعر لمم % 13(@)(@@) % صد فوافى ثم ألقى للسلم % و ظل نهبا بالأكف مقتسم % % 14(@)(@@) % لم يشك من ناب ولا ظفر ألم % فما اعتلى في الشرق للصبح علم % 15(@)(@@) % حتى لخضبنا المدى منه بدم % و أصبحت أطرافنا مثل العنم % % 16(@)(@@) % و ارتفعت قدورنا على اللقم % % قائلة للركب بالغلي هلم % 17(@)(@@) % فنحن في خفض و في ظل نعم % لنا من البيض حصون وعصم % 18(@)(@@) % لا خوف ما عذنا بها ولا عدم % % PageV01P810 البحر : - 1(@)(@@) % الله جارك ظاعنا ومقيما % % و ضمين نصرك حادثا وقديما % % 2(@)(@@) % إن تسر كان لك النجاح مصاحبا % أو تبق كان لك السرور نديما % % 3(@)(@@) % تغشاك بارقة السحابإذا سرت % غيثا و تلقاك الرياح نسيما % % 4(@)(@@) % أنت الربيع الطلق إن شاء الثرى % % و تزحل الأنواء سر قدوما % % 5(@)(@@) % لله همتك التي رجعت بها % % همم الملوك الصاعدات هموما % % 6(@)(@@) % و رياحك اللاتي تهب جنائبا % و لربما أجريتهن سموما % % 7(@)(@@) % و خلالك الزهر التي أنفت لها % % قمم المراتب أن تكون نجوما % % 8(@)(@@) % كم من عظيم القدر قد لقيته % % خطبا بأطراف الرماح عظيما % % 9(@)(@@) % و مشهر يدعى الكريم تركته % % يدعى و قد هطلت يداكلئيما % % 10(@)(@@) % أفنت ظباك الروم حتى أنها % % لم تبق إلا ظبية أو ريما % % PageV01P811 11(@)(@@) % و محوت آثار الصليبفلم تدع % للعين منها معلما معلوما % % 12(@)(@@) % خيل تثاب على تتابع كرها % % ندبا على لباتها وكلوما % % 13(@)(@@) % و ظبا محرمة على أغمادها % % حتى تبيح من الضلال حريما % % 14(@)(@@) % و مكارم أنصفت فيهن العلى % % و تركت مالك بينها مظلوما % % 15(@)(@@) % منحتك طاعتها القبائل رهبة % فمنحت 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms195# جمرة عزها تضريما % % 16(@)(@@) % أعطالك أصعبها الخطامو لم يكن % ليقود غيرك صعبها مخطوما % % 17(@)(@@) % فغدت سوامك لا تحاول نبوة % أبدا و لا تبغي سواك مسيما % % 18(@)(@@) % يستمطروه مواهبا ومواعدا % لم تعد منك سحائبا وغيوما % % 19(@)(@@) % أسمي مرهفة السيوف فضلتها % % شيما إذا جد القراع وخيما % % 20(@)(@@) % و أرى الأراقم قلدتك أمورها % % فدعتك مذ فقدت أباك زعيما % % PageV01P812 21(@)(@@) % ألبستني نعما رأيت بها الدجى % % صبحا وكنت أرى الصباح بهيما % % 22(@)(@@) % فغدوت يحسدني الصديقو قبلها % % قد كان يلقاني العدو رحيما % % 23(@)(@@) % فملأت آفاق البلاد بمنطق % لولا الثناء عليك عاد وجوما % % 24(@)(@@) % فسلمت من نوب الزمانو لا غدا % % شانيك من معنى السليم سليما % % 25(@)(@@) % طلب الملوك غبار شأوك فانثنوا % % صفر اليدين وخاما وذميما % % 26(@)(@@) % إن يسمحوا في الحينأو يتكلفوا % % كرم النفوس فقد خلقت كريما % % PageV01P813 البحر : - 1(@)(@@) % وراء العدا محر على الهول مقدم % و صل تحاماه الأراقم أرقم % 2(@)(@@) % و سيفان ما هزت يد الله منهما % % فكاس وما هز القيون فمحرم % 3(@)(@@) % و طاو رداء النقع بالكر ناشر % و حان به صدر القناة مقوم % 4(@)(@@) % و مجر بأعلام البسيطة مهتد % و يوم بفتيان الكريهة معلم % 5(@)(@@) % إذا ابن أبي الهيجاء هيج تجهمت % وجوه المنايافي ظبا تتبسم % 6(@)(@@) % هو السيف يمضي في اللقاء سميه % و لكنه أمضى غرارا وأصرم % 7(@)(@@) % قطوع إذا لم تقطع البيض نبوة % وصول ففي حديه بؤسى وأنعم % 8(@)(@@) % تحامت أعاديه الشآم كأنما % % أحاطت بها للطعن نار تضرم % 9(@)(@@) % و قد أعظمته الرومفاستصغرت به % % أكابرهاإن الشجاع معظم % 10(@)(@@) % فحلت عرى تيجانها لمؤيد % يخر له ذو التاجو هو معمم % PageV01P814 11(@)(@@) % غني عن الجيش اللهام بنفسه ؛ % فقير إليه الجيشو هو عرمرم % 12(@)(@@) % إذا جد في تعريسه وبكوره % % رأيت بقاع الأرض تثري وتعدم % 13(@)(@@) % سرى والثرى حران يرقب مزنه % % فراح على حران يهمي ويسجم % 14(@)(@@) % و قد سفرت أخلاقه وتوضحت % شمائله والصبح لا يتلثم % 15(@)(@@) % و أطلع من زرق الأسنة أنجما % على الثغر ترعاها من السعد أنجم % 16(@)(@@) % و أبرق ما بين الدروب سحابه % % فصاب ولكن صوب بارقه الدم % 17(@)(@@) % و إن ضربت دون الخليج خيامه % % فمن خلفه للرعب جيش مخيم % 18(@)(@@) % و معتصم بالمشرفية لم يكن % ليسلم منه في ذرى الطود أعصم % 19(@)(@@) % و ملمومة الأقطارحشو 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms196# عجاجها % % عتاق المذاكي والوشيج المقوم % 20(@)(@@) % ترقرق في جنح الظلامفينجلي % % و ترهج في صدر النهارفيظلم % PageV01P815 21(@)(@@) % سنابكها من تحتها تقرع الصفا % % و راياتها من فوقها تترنم % 22(@)(@@) % و خيل تحامى السهل حتى كأنها % % أجادل تحميها الشواهق حوم % 23(@)(@@) % تغير على الأعداءو النجم غائر % و تسري بهو الليل أسود مظلم % 24(@)(@@) % ألمت بشطي أرسناس وللقنا % % شطاط فآبت عنهو هو محطم % 25(@)(@@) % فلا زال للأسد الخواد مصرع % لديك وللغيد الكواعب موسم % 26(@)(@@) % و للوفد أعطان و للركب منزل % و للزور أوطان و للحمد مغنم % 27(@)(@@) % غشمت العدا والليث لو قل غشمه % لأعدائهما قيل ليث غشمشم % 28(@)(@@) % و قارعتحتى ليس في الأرض خالع % و أعطيتحتى ليس في الأرض معدم % 29(@)(@@) % إذا ما مضى يوم من البشر مسفر % أتى بعده يوم من النقع أقتم % 30(@)(@@) % وقائع تزري بالوقائع قبلها % % فتسبقها معدودةو تقدم % PageV01P816 31(@)(@@) % ملكت بها حيي نزار ويعرب % فأعطوا بأيديهم إليك وسلموا % % 32(@)(@@) % جوانحإلا عن قناككأنما % % حريمهمإلا عليكمحرم % 33(@)(@@) % فمن أسد تأوي الفريسة غيله % و ترتع في عريسهو هو ضيغم % 34(@)(@@) % و دام شبا أظفاره من عدوه % و لكنه عما حميت مقلم % 35(@)(@@) % شهدتلقد سادت عدي بسيد % يجودإذا ضن الغمام ويحلم % 36(@)(@@) % و كيف ينال الناس مجد قبيلة % علي بن عبد اللهو المجد منهم % 37(@)(@@) % فهمتفأعطيت الجزيلو لم يكن % ليعطى و إن أعطى الذي ليس يفهم % 38(@)(@@) % مدائحناوقف عليكفما تني % % تدبجها أفكارنا وتنمنم % 39(@)(@@) % و آمالنا تنأى إذا كنت نائيا % و تقدم بالنعمى لنا حين تقدم % PageV01P817 البحر : - 1(@)(@@) % سحابك في السماح لها انسجام % و نارك في العدو لها ضرام % 2(@)(@@) % و صوب يديك ما جرتا حياة % تعم بها البريةأو حمام % 3(@)(@@) % فمن يسراك تنهل المنايا % % و من يمناك تنهل الغمام % 4(@)(@@) % عهدنا منك ذا نقم ولكن % كرمتففيك نعمى وانتقام % 5(@)(@@) % إذا ما اشتد بأس الله يوما % % على قوم فأنت له حسام % 6(@)(@@) % رمى بك شامخات الروم عزم % هو الإصباح ما عن الظلام % 7(@)(@@) % فجست خلالها بمسومات % يشق على الجنائب ما تسام % 8(@)(@@) % و قد كانت لهم عصما فأضحت % و ليس بهن للعصم اعتصام % 9(@)(@@) % نظرت إلى الحصون بهافخرت % كما خرت لتقويض خيام % 10(@)(@@) % ولما أسهلت بك طالعات % أعنتها كما انقض الحمام % PageV01P818 11(@)(@@) % و قد كانت 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms197# موضحةفغطى % % على أوضاحها الدم والقتام % 12(@)(@@) % نثرت على الخليج الهامحتى % % كأن حصى الخليج طلى وهام % 13(@)(@@) % علا بعدت مسافتهاو مجد % تعالى أن يهم به همام % 14(@)(@@) % و آثار تمر بها الليالي % % و هن على جباه الدهر شام % 15(@)(@@) % لأغلبعامه في السلم يوم % و لكن يومه في الحرب عام % 16(@)(@@) % يضيع الحزم من ناواهحتى % % يبيتو ما يشد له حزام % 17(@)(@@) % و أرقهو بادر في سراه % % إليهفما ينيمو لا ينام % 18(@)(@@) % حلفت بما بنته لك العوالي % % من الشرف الذي لا يستضام % 19(@)(@@) % و بارقتين في يمناكهذي % % تشام حيا و هذي لا تشام % 20(@)(@@) % لتخترمن سائمة الأعادي % % بأروع لا يراع له سوام % PageV01P819 21(@)(@@) % يهجرو الرماح عليه ظل % ويسفر والعجاج له لثام % 22(@)(@@) % وذي لجب تضل البيد فيه % % وتفتقد الضحاضح والإكام % 23(@)(@@) % نأت أقطاره فالأرض تخفي % % جموعا والسماء له نعام % 24(@)(@@) % كتائب للقنافيها اشتجار % و للرايات والريح اختصام % 25(@)(@@) % أسيف الله أنت الناس طرا % لراجي العرفو الدنيا شآم % 26(@)(@@) % أقمنا لا نريمو سالمتنا % % بساحتك الخطوبفما نرام % 27(@)(@@) % فكل زماننا أبدا ربيع ؛ % و كل شهورنا الشهر الحرام % 28(@)(@@) % فداؤك من مناقبه نجوم % تلوحو من مواهبه جسام % 29(@)(@@) % إذا ما كنت أكرم من عليها % % فكيف أقول تفديك اللئام % 30(@)(@@) % و قد طلب الملوك مداك شأوا % فخاموا عن مداكو هم كرام % PageV01P820 31(@)(@@) % علام حرمتني إنشاد شعري % % لديك وقد تناشده الأنام % 32(@)(@@) % و لي فيك التي تلغي القوافي % % إذا ذكرتو يمتهن الكلام % 33(@)(@@) % تقصر عن مداها الريح جريا % و تعجز عن مواقعها السهام % 34(@)(@@) % تناهب حسنها شاد وحاد % تحث بها المطايا والمدام % 35(@)(@@) % لك النعم التي جلتو لكن % % دنوي منك والق رب التمام % 36(@)(@@) % و تشريفي القيام إزاء ملك % ملوك العالمين له قيام % 37(@)(@@) % و إحضاريإذا حبرت شعرا % لتسمع ما أحبرو السلام % PageV01P821 البحر : - 1(@)(@@) % إلمامها أهدى إلى الصب لمم % إذ طرقت وهنا فحيت من أمم % 2(@)(@@) % لاعبة زارت مجدا لعبت % به السرى والأرحبيات الرسم % 3(@)(@@) % باتت تريه البانو هو مغرب % في حمله الورد الجني والعنم % 4(@)(@@) % و طلعةسالم ضوء صبحها % % ظلامهاو الصبح حرب للظلم % 5(@)(@@) % و قد عفا منزلها بقلبه % % كما عفا منزلها بذي سلم % 6(@)(@@) % أحلها منه محلا صددا % لا الريح تعفوه ولا صوب الديم % 7(@)(@@) % يا كذب القرب المفيد 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms198# نعمة % منهاو يا صدق البعاد المنتقم % 8(@)(@@) % لا تنكرا فرط سقاميإنما % % حملت عن أجفانها بعض السقم % 9(@)(@@) % آنست منها بخيال آنس % يسابق الغمضإذا الغمض ألم % 10(@)(@@) % و عارض أكلأ منه بارقا % كالنار شبت في ذرى طود أشم % PageV01P822 11(@)(@@) % إذا ادلهم ابتسمت لشائم % أقطارهفاختلفت منه الشيم % 12(@)(@@) % كأنه نشوان جر ذيله % % فكلما ريع انتضى عضبا خذم % 13(@)(@@) % حتى إذا الرعد انبرت ألسنه % % كأنما يخلط لحنا بكلم % 14(@)(@@) % فاطرد الماء على أرجائه % % و ناره من كل أفق تضطرم % 15(@)(@@) % و حلت الريح نطاق مزنه % % فعاد منه البر بحرا ملتطم % 16(@)(@@) % قلناو قد أخجل فيض جوده % % جود ابن فهد كرم بعد كرم % 17(@)(@@) % العارض المختال من إنعامه % % و بأسه ما بين نعمى ونقم % 18(@)(@@) % مسلط البأس على أعدائه % % و مؤثر الجود على الأمر المهم % 19(@)(@@) % بنت أياديه بهدم ماله % % سور علا للأزد غير منهدم % 20(@)(@@) % ثناؤنا زهر الربيع المجتلى % % و جوده صوب الربيع المنسجم % % PageV01P823 21(@)(@@) % كم قال من يسمع مدحي ويرى % % إحسانهعاش زهير و هرم % % 22(@)(@@) % لا أعدم الله الأنام ظله % % فقد أزال الخوف عنه والعدم % 23(@)(@@) % هذاو يوم تكتسي البيض به % % لونا و تكسو لونها سود اللمم % % 24(@)(@@) % كأنه ليل بهيم خطرت % فيه من الشم البهاليل بهم % % 25(@)(@@) % أسد لهامن بيضها وسمرها % % جداول مطردات وأجم % 26(@)(@@) % ينثر بالطعن أنابيب القنا % % كما وهي سلك الفرند المنتظم % % 27(@)(@@) % أقامإذ عرد فيه قرنه % % بالسيف في قلب العجاج معتصم % 28(@)(@@) % حتى تجلى النقع عن أسيافه % % كما انجلى عن وضح الشيب الكتم % % 29(@)(@@) % يا أقرب الناس منالا في الندى ؛ % و أبعد الناس مراما في الهمم % % 30(@)(@@) % صمتفأعطيت الصيام حقه ؛ % و رب ذي صوم خداج لم يصم % % PageV01P824 31(@)(@@) % فانعم بفطر حسنت أيامه % % حتى لخلناها من الحسن نعم % 32(@)(@@) % وافاكو الغيث عميم والربى % % ضاحكة بالزهرو النبت عمم % 33(@)(@@) % فاغتنم العيش الذي من حقه % % إذا صفت أيامه أن يغتنم % 34(@)(@@) % و حمل الكأس الهمومإنها % % مطية للهم يحدوها النعم % 35(@)(@@) % مذهبة تبسم عن حبابها % % مثل جنى النرجس جادفابتسم % 36(@)(@@) % و اجتلها عذراء لم تأت بها % % غادة نهاب تعدى و ظلم % 37(@)(@@) % كأنها زهرة روض أشرقت % أجفانها المزن بدمع منسجم % 38(@)(@@) % و خير هذا الشعر ما تلبسه % % من ثقة في الشعر غير متهم 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms199# % PageV01P825 البحر : - 1(@)(@@) % برز إبراهيم في علمه % % فراح يدعى وارث العلم % 2(@)(@@) % أوضح نهج الطب في معشر % مازال فيهم دارس الرسم % 3(@)(@@) % كأنه من لطف أفكاره % % يجول بين الدم واللحم % 4(@)(@@) % لو غضبت روح على جسمها % % أصلح بين الروح والجسم % PageV01P826 البحر : - 1(@)(@@) % ما ودع اللهو لما بان منصرما % % حتى تلفت في أعقابه ندما % % 2(@)(@@) % بكى على الجهلإذ ولى فأعقبه % % حلما أراه الصبا لما مضى حلما % % 3(@)(@@) % ردا عليه رداء اللوم فيهو إن % رد الحنين أنينا و الدموع دما % % 4(@)(@@) % صبابة تلبس الكتمان كامنة % بين الضلوعو شيب يلبس الكتما % % 5(@)(@@) % لا أظلم الحب في رياو إن ظلمت % و لا أكفكف فيه الدمع ما انسجما % % 6(@)(@@) % هي القضيب ثنى أعطافه هيف % فكاد ينثر منه الورد والعنما % % 7(@)(@@) % مظلومة الحسنإن شبهت طلعتها % % صبحا يسالم في إشراقه الظلما % % 8(@)(@@) % جهد المتيم أن يرعى العهود لها % % حفظا و يحمل عن أجفانها السقما % % 9(@)(@@) % إن يظم منها إلى طيب العناقفكم % % روت جوانحه ضما وملتثما % % 10(@)(@@) % و صاحب لا أمل الدهر صحبته % % يعبس الموت فيه كلما ابتسما % % PageV01P827 11(@)(@@) % تنبي الطلاقةفي متنيه ظاهرة % عن القطوب الذي مازال مكتتما % % 12(@)(@@) % إذا اعتصمت به في يوم ملحمة % حسبتني بسليل الأزد معتصما % % 13(@)(@@) % و عارض ما حداه البرق مبتسما % إلا أرانا ابن إبراهيم مبتسما % % 14(@)(@@) % يبكيفينثر من أجفان مقلته % درا غدا في جفون النور منتظما % % 15(@)(@@) % كأنما الروضلما شام بارقه % % أفاد أخلاق عبد الله والشيما % % 16(@)(@@) % أغر يغمر شكري فيض أنعمه % % فكلما ازددت شكرا زادني نعما % % 17(@)(@@) % دعا الخطوب إلى سلمي وحرمني % % على النوائب لما راح لي حرما % % 18(@)(@@) % ممهد لي في أكنافه أبدا % ظلا عدمت لديه الخوف والعدما % % 19(@)(@@) % و تارك ماء وجهي في قرارته % % بماء كفيه لما فاض منسجما % % 20(@)(@@) % رضيت حكم زمان كان يسخطني % % مذ صار جدواه فيما بيننا حكما % % PageV01P828 21(@)(@@) % و إن غدوت زهيرا في مدائحه % % فقد غدا بتوالي جوده هرما % % 22(@)(@@) % هو الغمام الذي ما فاض محتفلا % إلا أصاب نداه العرب والعجما % % 23(@)(@@) % يا ابن الذوائب دم في منتهى شرف % شابت ذوائبهو الدهر ما احتلما % % 24(@)(@@) % فكم يد لك لم تخلق صنائعها % % عند العفاة وأخرى جددت نعما % % 25(@)(@@) % و مشهد ما جرى ماء الحديد به % % إلا 
urn:cts:arabLit:0366SariRaffaShacir.Diwan.JK007606-ara1:ms200# غدا البر بحرا ثم ملتطما % % 26(@)(@@) % ضاقت جوانبه بالبيض فازدحمت % كالماء ضاق به الينبوعفازدحما % % 27(@)(@@) % أضرمت نار المنايا في النفوس به % % ضرما و أخمدت من نيرانه ضرما % % 28(@)(@@) % أما الصيامفقد لبيت داعيه % % إلى العفافو لم تظهر له صمما % % 29(@)(@@) % تركت فيه سماء الجود هاطلة % فإن مضت ديم أتلعتها ديما % % 30(@)(@@) % أنامل ما هجرت الكأس دائرة % إلا وصلن الندى والسيف والقلما % % PageV01P829 31(@)(@@) % فاسلم لرعي زمام المجد مجتنبا % من ليس يرعى له إلا ولا ذمما % % 32(@)(@@) % و اسعد بقادمة كالحلي حاملة % شكرا تهنيك بالعيد الذي قدما % % 33(@)(@@) % مقلد بزمام القول قائلها % % فما تكلم إلا دبج الكلما % % PageV01P830 البحر : - 1(@)(@@) % سارية في غسق الظلام % دانية من قلل الآكام % 2(@)(@@) % جاءت مجيء الجحفل اللهام % و افترقت كالإبل السوام % 3(@)(@@) % كأنها والبرق في ابتسام % كتيبة مذهبة الأعلام % 4(@)(@@) % دنت من الأرض بلا احتشام % ثم بكت بكاء مستهام % 5(@)(@@) % فاستبشرت بسابغ الإنعام % و ثروة تحكم في الإعدام % 6(@)(@@) % كأنهافي خلع الغمام % محلة ملت من الإحرام % PageV01P831 البحر : - 1(@)(@@) % غدت لذاتنا أمما % % فلم تحسن لبعدكما % % 2(@)(@@) % و قد حث ابتسام البر % % ق دمع المزنفانسجما % % 3(@)(@@) % و حن الرعدحتى خل % ته يستعطف الديما % % 4(@)(@@) % و عندي قينة نظمت % شتيت العيش فانتظما % % 5(@)(@@) % كشمس سالمت ظلما % و غصن حامل عنما % % 6(@)(@@) % و صافية إذا ابتسمت % أرتنا العيش مبتسما % % 7(@)(@@) % و ريحان يروقكما % % و ندمان يسركما % % 8(@)(@@) % و علق معلم بالحس % % ن أضحى يحمل العلما % % 9(@)(@@) % كأن جبينه صبح % حوى من طرة ظلما % % 10(@)(@@) % و شيء لست أذكره % حذارا أن أطيركما % % PageV01P832 11(@)(@@) % إذا داوى به شبق ال % % سريرة داءه انحسما % % 12(@)(@@) % و لو كحلت به عينا % % معلوية لما حلما % % 13(@)(@@) % فسيرا تلقيا بحرا % من اللذات ملتطما % % PageV01P833 البحر : - 1(@)(@@) % قد اغتدى والصبح في إقدامه % % و الليل قد أعرض لانهزامه % % 2(@)(@@) % كأنما الجوزاء في انصرامه % % راعي سوام بث من سوامه % % 3(@)(@@) % أو متمط هب من منامه % % بملجم قد بات في لجامه % % 4(@)(@@) % مصغ إلى الفارس في قيامه % % حتى خبا المصباح في مدامه % % 5(@)(@@) % و قل سير كأسه وجامه % % قد ألهم الطاعة في إلهامه % % 6(@)(@@) % و مخطف شمر عن أكمامه % % محتلم قد ساد بابن عامه % % 7(@)(@@) % يكتن بدر الأفق في لثامه % % يجنب مغبوطا على إكرامه % % 8(@)(@@) % مبجلا دون بني أعمامه 