urn:cts:arabLit:0167BashsharIbnBurdShacir.Diwan.JK007613-ara1:ms201# % % PageV01P863 البحر : خفيف تام 1(@)(@@) % مسني من صدود عبدة ضر % % فبنات الفؤاد ما تستقر % % 2(@)(@@) % ذاك شيء في القلب من حب عبا % % دة باد وباطن يستسر % 3(@)(@@) % نفر الحي من مكاني فقالوا % % فز بصبر لعل عينك تبرو % % PageV01P864 البحر : سريع 1(@)(@@) % لو عاش حماد لهونا به % % لكنه صار إلى النار % % PageV01P865 البحر : طويل 1(@)(@@) % هم حملوا فوق المنابر صالحا % أخاك فضجت من أخيك المنابر % % PageV01P866 البحر : رجز تام 1(@)(@@) % إن السلام أيها الأمير % % عليك والرحمة والسرور % % PageV01P867 البحر : وافر تام 1(@)(@@) % كأن بني سدوس رهط ثور % خنافس تحت منكسر الجدار % % 2(@)(@@) % تحرك للفخار زبانييها % % وفخر الخنفساء من الصغار % PageV01P868 البحر : بسيط تام 1(@)(@@) % يلن حينا وحينا في شدته % % كالبحر يخلط أيسارا بأعسار % % PageV01P869 البحر : رمل تام 1(@)(@@) % يا خليلي أصيبا أو ذرا % % ليس كل البرق يهدي المطرا % % 2(@)(@@) % لا تكونا كامرىء صاحبته % % يترك العين ويبغي الأثرا % % 3(@)(@@) % ذهب المعروف إلا ذكره % % ربما أبكى الفتى ماذكرا % % 4(@)(@@) % وبقينا في زمان معضل % % يشرب الصفو ويبقي الكدرا % % PageV01P870 البحر : رمل تام 1(@)(@@) % عجبت فطمة من نعتي لها % % هل يجيد النعت مكفوف البصر % 2(@)(@@) % بنت عشر وثلاث قسمت % بين غصن وكثيب وقمر % % 3(@)(@@) % درة بحرية مكنونة % مازها التاجر من بين الدرر % % 4(@)(@@) % أذرت الدمع وقالت ويلتي % % من ولوع الكف ركاب الخطر % % 5(@)(@@) % أمتا بدد هذا لعبي % % ووشاحي حله حتى انتشر % % 6(@)(@@) % فدعيني معه يا أمتا % % علنا في خلوة نقضي الوطر % 7(@)(@@) % أقبلت مغضبة تضربها % % واعتراها كجنون مستعر % % 8(@)(@@) % بأبي والله ما أحسنه % % دمع عين يغسل الكحل قطر % % 9(@)(@@) % أيها النوام هبوا ويحكم % % واسألوني اليوم ما طعم السهر % PageV01P871 البحر : مجزوء الكامل 1(@)(@@) % يا واحد العرب الذي % % أمسى وليس له نظير % % 2(@)(@@) % لو كان مثلك آخر % % ماكان في الدنيا فقير % % PageV01P872 البحر : طويل 1(@)(@@) % شهدت على الزيدي أن نساءه % % ضياع إلى أير العقيلي تزفر % 2(@)(@@) % بلوت بني زيد فما في كبارهم % حلوم ولا في الأصغرين مطهر % % 3(@)(@@) % فأبلغ بني زيد وقل لسراتهم % وإن لم يكن فيهم سراة توقرث % % 4(@)(@@) % لأمكم الويلات إن قصائدي % % صواعق منها منجد ومغور % % 5(@)(@@) % أجدهم لا يتقون دنية % % ولايؤثرون الخير والخير يؤثر % % 6(@)(@@) % يلفون أولاد الزنى في عدادهم % % فعدتهم من عدة الناس أكثر % % 7(@)(@@) % إذ ما رأوا من دأبه مثل دأبهم % أطافوا 
urn:cts:arabLit:0167BashsharIbnBurdShacir.Diwan.JK007613-ara1:ms202# به والغي للغي أصور % % 8(@)(@@) % ولو فارقوا ما فيهم من دعارة % لما عرفتهم أمهم حين تنظر % % 9(@)(@@) % لقد فخروا بالملحقين عشية % فقلت افخروا إن كان في اللؤم مفخر % % 10(@)(@@) % يريدون مسعاتي ودون لقائها % % قناديل أبواب السماوات تزهر % PageV01P873 11(@)(@@) % فقل في بني زيد كما قال معرب % قوارير حجام غدا تتكسر % PageV01P874 البحر : هزج 1(@)(@@) % إذا أنشد حماد % فقل أحسن بشار % PageV01P875 البحر : وافر تام 1(@)(@@) % يكاد القلب من طرب إليهم % % ومن فرط الصبابة يستطار % 2(@)(@@) % وفي الحي الذين رأيت خود % % لعوب الدل آنسة نوار % % 3(@)(@@) % برود العارضين كأن فاها % % بعيد النوم عاتقة عقار % % 4(@)(@@) % إذا نادى المنادي كاد يقضي % % حذار البين لو نفع الحذار % % 5(@)(@@) % وود الليل زيد إليه ليل % ولم يخلق له أبدا نهار % % PageV01P876 البحر : خفيف تام 1(@)(@@) % عن يميني وعن يساري وقدا % % مي وخلفي الهوى فكيف أفر % 2(@)(@@) % أنا إن زلت عن مقامي لأمر % رابني تحت أخمصي مايضر % 3(@)(@@) % كمزيل رجليه عن بلل القط % % ر وما حوله من الأرض بحر % 4(@)(@@) % برقت لي حتى إذا قلت جادت % % أقلعت عن جهامة لاتدر % 5(@)(@@) % أيها البارق الذي ليس يجدي % % قد عرفناك فالتمس من تغر % PageV01P877 البحر : خفيف تام 1(@)(@@) % ربما سرك البعيد وأصلا % ك القريب النسيب نارا وعارا % % PageV01P878 البحر : طويل 1(@)(@@) % لعمري لئن أصبحت فوق مشذب % طويل تعفيك الرياح مع القطر % % 2(@)(@@) % لقد عشت مبسوط اليدين مبرزا % وعوفيت عند الموت من ضغطة القبر % 3(@)(@@) % وأفلت من ضيق التراب وغمه % ولم تفقد الدنيا فهل لك من شكر % % 4(@)(@@) % فما تشتفي عيناي من دائم البكى % % عليك ولو أني بكيت إلى الحشر % 5(@)(@@) % فطوبى لمن يبكي أخاه مجاهرا % ولكنني أبكي لفقدك في سري % % PageV01P879 البحر : طويل 1(@)(@@) % وقد كنت في ذاك الزمان الذي مضى % % أزارويدعوني الهوى فأزور % % 2(@)(@@) % فإن فاتني إلف ظللت كأنما % % يدير حياتي في يديه مدير % % 3(@)(@@) % ومرتجة الأرداف مهضومة الحشا % % تمور بسحر عينها وتدور % % 4(@)(@@) % إذا نظرت صبت عليك صبابة % وكادت قلوب العالمين تطير % % 5(@)(@@) % خلوت بها لا يخلص الماء بيننا % % إلى الصبح دوني حاجب وستور % % PageV01P880 البحر : كامل تام 1(@)(@@) % إبليس خير من أبيكم آدم % فتنبهوا يا معشر الفجار % % 2(@)(@@) % إبليس من نار وآدم طينة % والأرض لاتسمو سمو النار % PageV01P881 البحر : بسيط تام 1(@)(@@) % الأرض 
urn:cts:arabLit:0167BashsharIbnBurdShacir.Diwan.JK007613-ara1:ms203# مظلمة والنار مشرقة % والنار معبودة مذ كانت النار % PageV01P882 البحر : طويل 1(@)(@@) % وأبدى البلى فيها سطورا مبينة % عباراتها أن كل بيت سيدثر % 2(@)(@@) % وقفت بها صحبي فظلت عراصها % % بدمعي وأنفاسي تراح وتمطر % PageV01P883 البحر : منسرح 1(@)(@@) % ومسبح للسمام تعضده % يهماء ما في أديمها أثر % % 2(@)(@@) % كأنها بالضحى إذا مرجت % يم تداعى تياره الأشر % PageV01P884 البحر : طويل 1(@)(@@) % وما ظفرت عيني غداة لقيتها % % بشيء سوى أطرافها والمحاجر % % 2(@)(@@) % وحوراء من حور الجنان غريرة % يرى وجهه في وجهها كل ناظر % PageV01P885 البحر : مجزوء الخفيف 1(@)(@@) % قال ريم مرعث % ساحر الطرف والنظر % 2(@)(@@) % لست والله نائلي % % قلت أو يغلب القدر % 3(@)(@@) % أنت إن رمت وصلنا % % فانج هل تدرك القمر % PageV01P886 البحر : سريع 1(@)(@@) % ياعبد حبي لك مستور % % وكل حب غيره زور % % 2(@)(@@) % إن كان هجري سركم فاهجروا % % إني بما سرك مسرور % PageV01P887 البحر : سريع 1(@)(@@) % كنت إذا زرتث فتى ماجدا % % تشقى بكفيه الدنانير % % PageV01P888 البحر : بسيط تام 1(@)(@@) % إذا رضيتم بأن نجفى وسركم % قول الوشاة فلا شكوى ولا ضجرا % % PageV01P889 البحر : كامل تام 1(@)(@@) % وإذا أقل لي البخيل عذرته % إن القليل من البخيل كثير % % PageV01P890 البحر : بسيط تام 1(@)(@@) % والثدي تحسبه وسنان أو كسلا % وقد تمايل ميلا غير منكسر % PageV01P891 البحر : مجزوء الكامل 1(@)(@@) % لما طلعن من الرقي % % ق علي بالبردان خمسا % % 2(@)(@@) % وكأنهن أهلة % تحت الثياب رفقن شمسا % % 3(@)(@@) % باكرن عطر لطيمة % وغمسن في الجادي غمسا % % 4(@)(@@) % لما طلعن حففنها % % وأصخن ما يهمسن همسا % % 5(@)(@@) % فسألنني من في البيو % % ت فقلت ما يأوين إنسا % % 6(@)(@@) % ليت العيون الطارقا % % ت طمسن عنا اليوم طمسا % % 7(@)(@@) % فأصبن من طرف الحدي % % ث لذاذة وخرجن ملسا % % 8(@)(@@) % لولا تعرضهن لي % % يا قس كنت كأنت قسا % % PageV01P892 البحر : مجزوء الكامل 1(@)(@@) % ومكللات بالعيو % % ن طرقننا ورجعن ملسا % % PageV01P893 البحر : بسيط تام 1(@)(@@) % أثني عليك ولي حال تكذبني % % فيما أقول فأستحيي من الناس % % 3(@)(@@) % حتى إذا قيل ما أعطاك من صفد % % طأطأت من سوء حال عندها راسي % % PageV01P894 البحر : بسيط تام 1(@)(@@) % قومي اصبحينا فما صيغ الفتى حجرا % % لكن رهينة أجداث وأرماس % 2(@)(@@) % قومي اصبحينا فإن الدهر ذو غير % % أفنى لقيما وأفنى آل هرماس % % 3(@)(@@) % اليوم هم ويبدو في غد خبر % والدهر ما بين إنعام وإبآس % 4(@)(@@) % فاشرب على حدثان الدهر 
urn:cts:arabLit:0167BashsharIbnBurdShacir.Diwan.JK007613-ara1:ms204# مرتفقا % لا يصحب الهم قرع السن بالكاس % PageV01P895 البحر : خفيف تام 1(@)(@@) % فنعمنا والعين حي كميت % بحديث كنشوة الخندريس % % PageV01P896 البحر : هزج 1(@)(@@) % ومالت كف ساقينا % % بإبريق إلى طاس % 2(@)(@@) % له قهقهة فيه % على حبة أنفاس % PageV01P897 البحر : بسيط تام 1(@)(@@) % وكاشح معرض عني هممت به % ثم ارعويت وقلت الناس بالناس % PageV01P898 البحر : خفيف تام 1(@)(@@) % عرضن للذي تحب بحب ، % ثم دعه يروضه إبليس % % PageV01P899 البحر : كامل تام 1(@)(@@) % وخريدة سود ذوائبها % % قد ضمخت بالمسك والورس % % 2(@)(@@) % أقبلن في رأد الضحاء بها % % فسترن عين الشمس بالشمس % % PageV01P900 البحر : خفيف تام 1(@)(@@) % ما أنت يا كردي بالهش % ولا أبريك من الغش % 2(@)(@@) % لم تهدنا نعلا ولا خاتما % من أين أقبلت من الحش % PageV01P901 البحر : طويل 1(@)(@@) % أظلت علينا منك يوما سحابة % أضاءت لنا برقا وأبطا رشاشها % % 2(@)(@@) % فلا غيمها يجلى فييأس طامع % ولا غيثها يأتي فيروى عطاشها % % PageV01P902 البحر : خفيف تام 1(@)(@@) % أجعل الحب بين حبي وبيني % % قاضيا إنني به اليوم راض % 2(@)(@@) % فاجتمعنا فقلت ياحب نفسي % % إن عيني قليلة الاغتماض % 3(@)(@@) % أنت عذبتني وأنحلت جسمي % % فارحم اليوم دائم الأمراض % % 4(@)(@@) % قال لي لا يحل حكمي عليها % % أنت أولى بالسقم والإحراض % % 5(@)(@@) % قلت لما أجابني بهواها % % شمل الجور في الهوى كل قاض % PageV01P903 البحر : كامل تام 1(@)(@@) % غمض الحديد بصاحبيك فغمضا % % وبقيت تطلب في الحبالة منهضا % % 2(@)(@@) % وكأن قلبي عند كل مصيبة % % عظم تكرر صدعه فتهيضا % % 3(@)(@@) % وأخ سلوت له فأذكره أخ % فمضى وتذكرك الحوادث ما مضى % % 4(@)(@@) % فاشرب على تلف الأحبة إننا % % جزر المنية ظاعنين وخفضا % % 5(@)(@@) % ولقد جريت مع الصبا طلق الصبا % % ثم ارعويت فلم أجد لي مركضا % % 6(@)(@@) % وعلمت ما علم امرؤ في دهره % % فأطعت عذالي وأعطيت الرضا % % 7(@)(@@) % وصحوت من سكر وكنت موكلا % % أرعى الحمامة والغراب الأبيضا % % 8(@)(@@) % ما كل بارقة تجود بمائها % % ولربما صدق الربيع فروضا % % 9(@)(@@) % ومنيفة شرفا جعلت لها الهوى % % إما مكافأة وإما مقرضا % % 10(@)(@@) % حتى إذا شربت بماء مودتي % % وشربت برد رضابها متبرضا % % PageV01P904 11(@)(@@) % قالت لتربيها اذهبا فتحسسا % % ما باله ترك السلام وأعرضا % % 12(@)(@@) % قد ذقت ألفته وذقت فراقة % فوجدت ذا عسلا وذا جمر الغضا % % 13(@)(@@) % يا ليت شعري فيم كان صدوده % % أأسأت أم رعد السحاب وأومضا % % 14(@)(@@) % ويلي عليه وويلتي من 
urn:cts:arabLit:0167BashsharIbnBurdShacir.Diwan.JK007613-ara1:ms205# بينه % ما كان إلا كالخضاب فقد نضا % % 15(@)(@@) % سبحان من كتب الشقاء لذي الهوى % % كان الذي قد كان حكما فانقضى % % PageV01P905 البحر : وافر تام 1(@)(@@) % دعتني حين شبت إلى المعاصي % % محاسن زائر كالريم غض % 2(@)(@@) % كأن كلامه يوم التقينا % % رقى يأخذن في طول وعرض % PageV01P906 البحر : خفيف تام 1(@)(@@) % فيك للمجد شيمة قد كفتني % % منك عند اللقاء بالمتقاضي % % 2(@)(@@) % فإذا المجد كان عونا على المر % % ء تقاضيته بترك التقاضي % % PageV01P907 البحر : طويل 1(@)(@@) % هززتك لا لأني وجدتك ناسيا % لأمري ولكني أردت التقاضيا % % 2(@)(@@) % ولكن رأيت السيف من بعد سله % إلى الهز محتاجا وإن كان ماضيا % % PageV01P908 البحر : طويل 1(@)(@@) % أبا خالد مازلت سباح غمرة % صغيرا فلما شبت خيمت بالشاطي % % 2(@)(@@) % وكنت جوادا سابقا ثم لم تزل % % تؤخر حتى جئت تخطو مع الخاطي % % 3(@)(@@) % فأنت بما تزداد من طول رفعة % وتنقص من جد لذاك بإفراط % 4(@)(@@) % كسنور عبد الله بيع بدرهم % % صغيرا فلما شب بيع بقيراط % % PageV01P909 البحر : طويل 1(@)(@@) % على واسط من ربها ألف لعنة % وتسعة آلاف على أهل واسط % % 2(@)(@@) % أيلتمس المعروف من أهل واسط % وواسط مأوى كل علج وساقط % % 3(@)(@@) % نبيط وأعلاج وخور تجمعوا % % شرار عباد الله من كل غائط % 4(@)(@@) % وإني لأرجو أن أنال بشتمهم % % من الله أجرا مثل أجر المرابط % % PageV01P910 البحر : سريع 1(@)(@@) % ياعبد ياجافية قاطعه % أما رحمت المقلة الدامعه % 2(@)(@@) % يا عبد خافي الله في عاشق % يهواك حتى تقع الواقعه % % PageV01P911 البحر : طويل 1(@)(@@) % لعمر أبي زوارها الصيد إنهم % % لفي منظر منها وحسن سماع % % 2(@)(@@) % تصلي لها آذاننا وعيوننا % % إذا ما التقينا والقلوب دواع % % 3(@)(@@) % وصفراء مثل الخيزرانة لم تعش % % ببؤس ولم تركب مطية راع % % 4(@)(@@) % جرى اللؤلؤ المكنون فوق لسانها % % لزوارها من مزهر ويراع % % 5(@)(@@) % إذا قلبت أطرافها العود زلزلت % % قلوبا دعاها للصبابة داع % % 6(@)(@@) % كأنهم في جنة قد تلاحقت % % محاسنها من روضة ويفاع % % 7(@)(@@) % يروحون من تغريدها وحديثها % % نشاوى وما تسعيهم بصواع % % 8(@)(@@) % لعوب بألباب الرجال وإن دنت % أطيع التقى والغي غير مطاع % % PageV01P912 البحر : طويل 1(@)(@@) % وأبثثت عمرا بعض ما في جوانحي % % وجرعته من مر ما أتجرع % % 2(@)(@@) % ولابد من شكوى إلى ذي حفيظة % % إذا جعلت أسرار نفسي تطلع % PageV01P913 البحر : طويل 1(@)(@@) % ولابد من شكوى إلى ذي 
urn:cts:arabLit:0167BashsharIbnBurdShacir.Diwan.JK007613-ara1:ms206# مروءة % يواسيك أو يسليك أو يتوجع % % PageV01P914 البحر : بسيط تام 1(@)(@@) % أبناء عمر و لفي خفض وفي دعة % % وفي عطاء لعمري غير ممنوع % 2(@)(@@) % وضيف عمرو عمرو ساهران معا % عمر و لبطنته والضيف للجوع % PageV01P915 البحر : طويل 1(@)(@@) % ولا يلبث الهجران أن يقطع الهوى % % إذا لم تطالع آلفا ويطالع % PageV01P916 البحر : بسيط تام 1(@)(@@) % لا أحمل اللوم فيها والغرام بها % % ما كلف نفسا فوق ما تسع % % PageV01P917 البحر : خفيف تام 1(@)(@@) % تشتهي قربك الرباب وتخشى % % عين واش وتتقي أسماعه % % 2(@)(@@) % أنت من قلبها محل شراب % % تشتهي شربه وتخشى صداعه % % PageV01P918 البحر : - 1(@)(@@) % عجزاء من سرب بني مالك % لها من بطنها أرفع % 2(@)(@@) % زين أعلاه بإشرافه % وانضم من أسفله المشرع % PageV01P919 البحر : طويل 1(@)(@@) % حدا بعضهم ذات اليمين وبعضهم % % شمالا وقلبي بينهم متوزع % 2(@)(@@) % فوالله ما أدري بليل وقد مضت % % حمولهم أي الفريقين أتبع % 3(@)(@@) % أشاروا بتسليم فجدنا بأنفس % تسيل من الآفاق والسم أدمع % PageV01P920 البحر : طويل 1(@)(@@) % كأن جفوني كانت العيس فوقها % % فسارت وسالت بعدهن المدامع % PageV01P921 البحر : طويل 1(@)(@@) % أأبكاك داع في الصباح سميع % وطيف سرى من نهروان يريع % 2(@)(@@) % وقائلة إن العيال معول % % عليك فلا تقعد وأنت مضيع % % 3(@)(@@) % فقلت لها : كفي سيكفيك وافد % أشم لأبواب الملوك قروع % % 4(@)(@@) % وما أنا راض بالهوان إذا احتبى % % على الذل في دار الهوان رتوع % % 5(@)(@@) % إذا الأمر لم يقبل علي بوجهه % فلي مسلك باليعملات وسيع % 6(@)(@@) % وزرت هماما يصبح الناس حوله % % عكوفا عليهم ذلة وخضوع % % 7(@)(@@) % ولما التقينا سابق الحمد جوده % فأجدى وجود الطالبين سريع % % 8(@)(@@) % وأملاك صدق ألبستني طرازهم % % قصائد مالي غيرهن شفيع % % 9(@)(@@) % وغيث إذا ما لاح أومض برقه % % كما أومضت تحت الرداء خريع % % 10(@)(@@) % إذا حاجة ألقت علي بعاعها % % ركبت وحسبي منصل وقطيع % % PageV01P922 11(@)(@@) % يردن امرأ قد شذب الحمد ماله % % أغر طويل الباع حين يبوع % % 12(@)(@@) % وما ضاع مال أورث الحمد أهله % % ولكن أموال البخيل تضيع % % 13(@)(@@) % على خشبات الملك منك مهابة % وفي الدرع عبل الساعدين قروع % % 14(@)(@@) % يشق الوغى عن وجهه صدق نجدة % % وأبيض من ماء الحديد وقيع % % 15(@)(@@) % إذا خزن المال البخيل فإنما % % خزائنه خطية ودروع % % 16(@)(@@) % وبيض بها مسك مكان بنانه % ولكنها ريح الدماء تضوع % % 17(@)(@@) % تروح بأرزاق وتغدو بغارة % فأنت ذعاف 
urn:cts:arabLit:0167BashsharIbnBurdShacir.Diwan.JK007613-ara1:ms207# مرة وربيع % % PageV01P923 البحر : طويل 1(@)(@@) % يطيب ريح الخيزرانة بينهم % % على أنها ريح الدماء تضوع % % PageV01P924 البحر : مديد تام 1(@)(@@) % سيدي لا تأت في قمر % لحديث وارقب الدرعا % % 2(@)(@@) % وتوق الطيب ليلتنا % % إنه واش إذا سطعا % % PageV01P925 البحر : منسرح 1(@)(@@) % لو نكح الليث في استه خضعا % % ومات جوعا ولم ينل طمعا % % 2(@)(@@) % كذلك السيف عند هزته % لو بصق الناس فيه ما قطعا % % PageV01P926 البحر : رمل تام 1(@)(@@) % أنفس الشوق ولا ينفسني % % وإذا قارعني الهم رجع % 2(@)(@@) % أصرع القرن إذا نازلته % وإذا صارعني الحب صرع % % 3(@)(@@) % أنا كالسيف إذ روعته % لم يروعك وأن هز قطع % 4(@)(@@) % سيفي الحلم وفي منطقتي % % أسد الموت إذا الموت نقع % % PageV01P927 البحر : طويل 1(@)(@@) % وغيران من دون النساء كأنه % % أسامة والشبلين حين يجوع % % PageV01P928 البحر : طويل 1(@)(@@) % وكذبت طرفي عنك والطرف صادق % % وأسمعت أذني فيك وهي ماليس تسمع % % 2(@)(@@) % لقيت أمورا فيك لم ألق مثلها % % وأعظم منها فيك ما أتوقع % % 3(@)(@@) % فلا كبرتي تبكي ولا لك رحمة % % ولاعنك إقصار ولافيك مطمع % % PageV01P929 البحر : كامل تام 1(@)(@@) % عند الملوك مضرة ومنافع % % وأرى البرامك لاتضر وتنفع % % 2(@)(@@) % إن العروق إذا استسرت في الثرى % % أندى النبات بها وطاب المزرع % % 3(@)(@@) % وإذا جهلت من امرىء أعراقه % % وقديمة فانظر إلى ما يصنع % % PageV01P930 البحر : طويل 1(@)(@@) % ألا إن قلبي من فراق أحبتي % % وإن كنت لا أبدي الصبابة جازع % % 2(@)(@@) % ودمعي بين الحزن والصبر فاضحي % % وستري عن العذال عاص وطائع % % PageV01P931 البحر : طويل 1(@)(@@) % وإنا ليجري بيننا حين نلتقي % % حديث له وشي كوشي المطارف % PageV01P932 البحر : كامل تام 1(@)(@@) % ياعبد حبك شفني شفا % % والحب داء يورث الحتفا % % 2(@)(@@) % والحب يخفيه المحب لكي % % لا يستراب به وما يخفى % % PageV01P933 البحر : طويل 1(@)(@@) % أخوك الذي لا تملك الحس نفسه % % وترفض عند المحفظات الكتائف % PageV01P934 البحر : طويل 1(@)(@@) % فسد الزمان وساد فيه المقرف % وجرى مع الطرف الحمار الموكف % PageV01P935 البحر : خفيف تام 1(@)(@@) % قل لعبد الكريم يا ابن أبي العو % % جاء بعت الإسلام بالكفر موقا % % 2(@)(@@) % لاتصلي ولاتصوم فإن صم % ت فبعض النهار صوما رقيقا % % 3(@)(@@) % لاتبالي إذا أصبت من الخم % % ر عتيقا أن لا تكون عتيقا % % 4(@)(@@) % ليت شعري غداة حليت في الجي % % د حنيفا حليت أم زنديقا % % 5(@)(@@) % أنت ممن يدور في لعنة الل 
urn:cts:arabLit:0167BashsharIbnBurdShacir.Diwan.JK007613-ara1:ms208# % ه صديق لمن ينيك صديقا % % PageV01P936 البحر : طويل 1(@)(@@) % ولما التقينا بالخبيبة غرني % % بمعروفه حتى خرجت أفوق % 2(@)(@@) % حباني بعبد قعسري وقينة % ووشي وآلاف لهن بريق % % 3(@)(@@) % فقل ليزيد يلعص الشهد خاليا % لنا دونه عند الخليفة سوق % % 4(@)(@@) % رقدت فنم يا ابن الخبيثة إنها % % مكارم لا يسطيعهن لصيق % 5(@)(@@) % أبى لك عرق من فلانة أن ترى % % جوادا ورأس حيث شبت حليق % % PageV01P937 البحر : طويل 1(@)(@@) % خليلي إن العسر سوف يفيق % وإن يسارا في غد لخليق % 2(@)(@@) % ذراني أشب همي براح فإنني % % أرى الدهر فيه فرجة ومضيق % 3(@)(@@) % وما كنت إلا كالزمان إذا صحا % % صحوت وإن ماق الزمان أموق % 4(@)(@@) % أأدماء لا أستطيع في قلة الثرا % % خزوزا ووشيا والقليل محيق % 5(@)(@@) % خذي من يدي ما قل إن زماننا % % شموس ومعروف الرجال رقيق % % 6(@)(@@) % لقد كنت لا أرضى بأدنى معيشة % % ولايشتكي بخلا علي رفيق % 7(@)(@@) % خليلي إن المال ليس بنافع % % إذا لم ينل منه أخ وصديق % 8(@)(@@) % وكنت إذا ضاقت علي محلة % تيممت أخرى ما علي تضيق % 9(@)(@@) % وما خاب بين الله والناس عامل % له في التقى أو في المحامد سوق % 10(@)(@@) % ولاضاق فضل الله عن متعفف % ولكن أخلاق الرجال تضيق % % PageV01P938 البحر : - - 1(@)(@@) % ودعاني معشر كلهم % حمق دام لهم ذاك الحمق % % 2(@)(@@) % ليس من جرم ولكن غاظهم % % شرفي العارض قد سد الأفق % PageV01P939 البحر : رمل تام 1(@)(@@) % من خراسان وبيتي في الذرى % % ولدى المسعاة فرعي قد سبق % % PageV01P940 البحر : طويل 1(@)(@@) % وإني لمن قوم خراسان دارهم % كرام ، وفرعي فيهم ناضر بسق % PageV01P941 البحر : رمل تام 1(@)(@@) % أنفق المال ولا تشق به % خير ديناريك دينار نفق % PageV01P942 البحر : رمل تام 1(@)(@@) % سبقت بالحب سلمى غيرها % % وأحق الناس عندي من سبق % % PageV01P943 البحر : رمل تام 1(@)(@@) % في الفتى الزنجي منه شبه % % غير أن الزق أذكى وأرق % % 2(@)(@@) % فانقضى ذاك وكانت شرتي % % مثل ما كان ذبال فاحترق % % PageV01P944 البحر : رمل تام 1(@)(@@) % وكأن الزق مملوءا إذا % % ما بطحنا الزق زنجي سرق % % 2(@)(@@) % شد بالحبل ولقوا فضله % فوق أعلى حلقه حتى اختنق % % PageV01P945 البحر : رمل تام 1(@)(@@) % إنما تسرح آساد الشرى % % حيث لاتنصب أشراك الحدق % % PageV01P946 البحر : خفيف تام 1(@)(@@) % عبد إني إليك بالأشواق % % لتلاق وكيف لي بالتلاقي % % 2(@)(@@) % أنا والله أشتهي سحر عيني 
urn:cts:arabLit:0167BashsharIbnBurdShacir.Diwan.JK007613-ara1:ms209# % % ك وأخشى مصارع العشاق % % 3(@)(@@) % وأهاب الحرسي محتسب الجن % % د يلف البرئ بالفساق % % 4(@)(@@) % فاصبري مثلما صبرت فإن الصب % % ر حظ من صالح الأخلاق % % 5(@)(@@) % إنني من بني عقيل بن كعب % % موضع السيف من طلى الأعناق % % PageV01P947 البحر : سريع 1(@)(@@) % مالمت حمادا على فسقه % % يلومه الجاهل والمائق % % 2(@)(@@) % رماهم من أيره واسته % % ملكه إياهما الخالق % % 3(@)(@@) % ما بات إلا فوقه فاسق % % ينيكه أو تحته فاسق % % PageV01P948 البحر : طويل 1(@)(@@) % مواعيد حماد سماء مخيلة % تكشف عن رعد ولكن ستبرق % 2(@)(@@) % إذا جئته يوما أحال على غد % كما وعد الكمون ماليس يصدق % % 3(@)(@@) % وفي نافع عني جفاء وإنني % % لأطرق أحيانا وذو اللب يطرق % % 4(@)(@@) % وللنقرى قوم فلو كنت منهم % % دعيت ولكن دوني الباب مغلق % 5(@)(@@) % أبا عمر خلفت خلفك حاجتي % % وحاجة غيري بين عينيك تبرق % % 6(@)(@@) % وما زلت أستأنيك حتى حسرتني % % بوعد كجاري الآل يخفى ويخفق % % PageV01P949 البحر : منسرح 1(@)(@@) % قد ألبس العيش ذا الرقاع ولا % % ألبس ثوب الإخاء منخرقا % % 2(@)(@@) % أصبحت مثل السراب يدنو فلا % % يوجد شيئا وإن نأى خفقا % % PageV01P950 البحر : طويل 1(@)(@@) % لقد عشقت أذني كلاما سمعته % % رخيما وقلبي للمليحة أعشق % % 2(@)(@@) % ولو عاينوها لم يلوموا على البكا % % كريما سقاه الخمر بدر محلق % 3(@)(@@) % وكيف تناسي من كأن حديثه % بأذني وإن غيبت قرط معلق % % PageV01P951 البحر : طويل 1(@)(@@) % ولست بناس من يكون كلامه % بأذني وإن غيبت قرطا معلقا % % PageV01P952 البحر : طويل 1(@)(@@) % كأن لهم دينا عليه ومالهم % % سوا جود كفيه عليه حقوق % PageV01P953 البحر : بسيط تام 1(@)(@@) % وظن وهو مجد في هزيمته % ما لاح قدامه شخصا يسابقه % PageV01P954 البحر : طويل 1(@)(@@) % وبهماء يستاف التراب دليلها % % وليس له إلا اليماني مخلق % % 2(@)(@@) % تجاوزتها وحدي ولم أرهب الردى % % دليلي نجم أو حوار محلق % % PageV01P955 البحر : بسيط تام 1(@)(@@) % مارمت صرفا لوجهي عن وصالكم % % إلا وحبكم يثني لكم عنقي % % PageV01P956 البحر : سريع 1(@)(@@) % يا عبد زوريني تكن منة % لله عندي يوم ألقاك % 2(@)(@@) % والله ثم الله فاستيقني % % إني لأرجوك وأخشاك % 3(@)(@@) % ياعبد إني هالك مدنف % % إن لم أذق برد ثناياك % % 4(@)(@@) % فلا تردي عاشقا مدنفا % يرضى بهذا القدر من ذاك % % PageV01P957 البحر : - 1(@)(@@) % لو كانت الفدية مقبولة % % لقلت بي لا بك حماكا % % PageV01P958 البحر : هزج 1(@)(@@) % بعثت بذكرها شعري % % وقدمت الهوى شركا % % 2(@)(@@) % فلما 
urn:cts:arabLit:0167BashsharIbnBurdShacir.Diwan.JK007613-ara1:ms210# شاقها قولي % % وشب الحب فاحتنكا % % 3(@)(@@) % أتتني الشمس زائرة % ولم تك تبرح الفلكا % % 4(@)(@@) % تقول وقد خلوت بها % % تكلم وأكفني يدكا % % 5(@)(@@) % وجدت العيش في ( سعدى % % وكان العيش قد هلكا % % PageV01P959 البحر : بسيط تام 1(@)(@@) % يا قرة العين إني لاأسميك % أكني بأخرى أسميها وأعنيك % 2(@)(@@) % أخشى عليك من الجارات حاسدة % أو سهم غيران يرميني ويرميك % % 3(@)(@@) % لولا الرقيبات إذ ودعت غادية % قبلت فاك وقلت : النفس تفديك % 4(@)(@@) % يا أطيب الناس ريقا غير مختبر % إلا شهادة أطراف المساويك % 5(@)(@@) % قد زرتنا مرة في الدهر واحدة % عودي ولاتجعليها بيضة الديك % 6(@)(@@) % يا رحمة الله حلي في منازلنا % % حسبي برائحة الفردوس من فيك % 7(@)(@@) % إن الذي راح مغبوطا بنعمته % كف تمسك أو كف تعاطيك % 8(@)(@@) % ولو وهبت لنا يوما نعيش به % أحييت نفسا وكانت من مساعيك % PageV01P960 البحر : مجزوء الرمل 1(@)(@@) % عبد يا قرة عيني % % أنصفي ! روحي فداك % 2(@)(@@) % عاشقا ليس له ذك % ر ولا هم سواك % PageV01P961 البحر : وافر تام 1(@)(@@) % وهبت له على المسواك ريقا % % فطاب له بطيب ثنيتيك % 2(@)(@@) % أقبله على الذكرى كأني % % أقبل فيه فاك ومقلتيك % PageV01P962 البحر : وافر تام 1(@)(@@) % أراك اليوم لي وغدا لغيري % % وبعد غد لأقربنا إليكا % % 2(@)(@@) % إذا أحببت ذا فارقت هذا % % كأن فراقه حتم عليكا % % 3(@)(@@) % فأقدمهم أخسهم جميعا % وأحدثم أحبهم إليكا % % 4(@)(@@) % وكلهم وإن طرمذت فيهم % % ستتركه وشيكا في يديكا % % PageV01P963 البحر : سريع 1(@)(@@) % يا عبد بالله ارحمي عبدك % وعلليه بمنى وعدك % 2(@)(@@) % يصبح مكروبا ويمسي به % وليس يدري ما له عندك % PageV01P964 البحر : بسيط تام 1(@)(@@) % أغراك بالبخل قلب لا يلين لنا % % يا ليته مرة بالجود يغريك % % PageV01P965 البحر : منسرح 1(@)(@@) % عنان يا منيتي ويا سكني % % أما تريني أجول في سكك % % 2(@)(@@) % حرمت منك الوفا معذبتي % % فعجلي بالسجل في صكك % 3(@)(@@) % إني ورب السماء مجتهد % في حل ما قد عقدت من تكك % % 4(@)(@@) % بلى وإن شئت قلت فيشلة % تسكن الهائجات من حكك % % 5(@)(@@) % ماذا تقولين لرب العلا % % إذا تخليت به وحدك % PageV01P966 البحر : وافر تام 1(@)(@@) % وكيف يخف لي بصري وسمعي % % وحولي عسكران من الثقال % 2(@)(@@) % قعودا حول دسكرتي وعندي % % كأن لهم علي فضول مال % 3(@)(@@) % إذا ماشئت صبحني هلال % % وأي الناس أثقل من هلال % % PageV01P967 البحر : طويل 1(@)(@@) % حذا خالد في 
urn:cts:arabLit:0167BashsharIbnBurdShacir.Diwan.JK007613-ara1:ms211# فعله حذو برمك % فمجد له مستطرف وأصيل % % 2(@)(@@) % وكان ذوو الآمال يدعون قبله % % بلفظ على الإعدام فيه دليل % % 3(@)(@@) % يسمون بالسؤال في كل موطن % % وإن كان فيهم نابه وجليل % % 4(@)(@@) % فسماهم الزوار سترا عليهم % % فأستاره في المهتدين سدول % % PageV01P968 البحر : رمل تام 1(@)(@@) % إن سلمى خلقت من قصب % قصب السكر لا عظم الجمل % % 2(@)(@@) % وإذا أدنيت منها بصلا % غلب المسك على ريح البصل % PageV01P969 البحر : طويل 1(@)(@@) % لقد كاد ماأخفي من الوجد والهوى % % يكون جوى بين الجوانح أو خبلا % % 2(@)(@@) % إذا قال مهلا ذو القرابة زادني % % ولوعا بذكراها ووجدا بها مهلا % % 3(@)(@@) % فلا يحسب البيض الأوانس أن في % % فؤادي سوى سعدى لغانية فضلا % % 4(@)(@@) % فأقسم إن كان الهوى غير بالغ % % بي القتل من سعدى لقد جاوز القتلا % 5(@)(@@) % فيا صاح خبرني الذي أنت صانع % بقاتلتي ظلما وما طلبت ذحلا % 6(@)(@@) % سوى أنني في الحب بيني وبينها % % شددت على أكظام سر لها قفلا % % PageV01P970 البحر : متقارب تام 1(@)(@@) % وهبت لنا يا فتى منقر % % وعجل وأكرمهم أولا % % 2(@)(@@) % وأبسطهم راحة في الندى % % وأرفعهم ذروة في العلا % 3(@)(@@) % عجوزا قد أوردها عمرها % % وأسكنها الدهر دار البلى % % 4(@)(@@) % سلوحا توهمت أن الرعا % % ء سقوها ليسهلها الحنظلا % 5(@)(@@) % وأجدب من ثور زراعة % أصاب على جوعه سنبلا % % 6(@)(@@) % وأزهد من جيفة لم تدع % % لها الشمس من مفصل مفصلا % % 7(@)(@@) % وأضرط من أم مبتاعها % % إن اقتحمت بكرة حرملا % % 8(@)(@@) % فلو تأكل الزبد بالنرسيان % وتدمج المسك والمندلا % % 9(@)(@@) % لما طيب الله أرواحها % % ولا بل من عظمها الأنحلا % 10(@)(@@) % وضعت يميني على ظهرها % % فخلت حراقفها جندلا % % PageV01P971 11(@)(@@) % وأهوت شمالي لعرقوبها % % فخلت عراقيبها مغزلا % % 12(@)(@@) % وقلبت أليتها بعد ذا % % فشبهت عصعصها منجلا % % 13(@)(@@) % فقلت أبيع فلا مشربا % أرجي لديها ولا مأكلا % % 14(@)(@@) % أم أشوي وأطبخ من لحمها % % وأطيب من ذاك مضغ السلا % % 15(@)(@@) % أم أجعل من جلدها حنبلا % فاقذر بحنبلها حنبلا % % 16(@)(@@) % إذا ما أمرت على مجلس % % من العجب سبح أو هللا % % 17(@)(@@) % رأوا آية خلفها سائق % يحث وإن هرولت هرولا % % 18(@)(@@) % وكنت أمرت بها ضخمة % بلحم وشحم قد استكملا % % 19(@)(@@) % ولكن روحا عدا طوره % وما كنت أحسب أن يفعلا % % 20(@)(@@) % فعض الذي خان في أمرها % % من آست أمه بظرها الأغرلا % PageV01P972 21(@)(@@) % ولولا مكانك قلدته 
urn:cts:arabLit:0167BashsharIbnBurdShacir.Diwan.JK007613-ara1:ms212# % علاطا وأنشقته الخردلا % 22(@)(@@) % ولولا استحائيك خضبتها % % وعلقت في جيدها جلجلا % 23(@)(@@) % فجاءتك حتى ترى حالها % % فتعلم أني بها مبتلى % % 24(@)(@@) % سألتك لحما لصبياننا % % فقد زدتني فيهم عيلا % % 25(@)(@@) % فخذها وأنت بنا محسن % وما زلت بي محسنا مجملا % % PageV01P973 البحر : كامل تام 1(@)(@@) % ولنافع فضل على أكفائه % % إن الكريم أحق بالتفضيل % 2(@)(@@) % يا نافع الشبرات حين تناوحت % % هوج الرياح وأعقبت بوبول % % 3(@)(@@) % أشبهت عقبة غير ما متشبه % ونشأت في حلم وحسن قبول % % 4(@)(@@) % ووليت فينا أشهرا فكفيتنا % % عنت المريب وسلة التضليل % 5(@)(@@) % تدعى هلالا في الزمان ونافعا % % والسلم نعم أبوة المأمول % PageV01P974 البحر : خفيف تام 1(@)(@@) % ابن نهيا رأس علي ثقيل % واحتمال الرأسين خطب جليل % % 2(@)(@@) % ادع غيري إلى عبادة الاثنين % فإني بواحد مشغول % % 3(@)(@@) % يا بن نهيا برئت منك إلى الل % % ه جهارا وذاك مني قليل % PageV01P975 البحر : طويل 1(@)(@@) % إذا ولد المولود أعمى وجدته % % وجدك أهدى من بصير وأجولا % % 2(@)(@@) % عميت جنينا والذكاء من العمى % % فجئت عجيب الظن للعلم معقلا % % 3(@)(@@) % وغاض ضياء العين للقلب فاغتدى % % بقلب إذا ما ضيع الناس حصلا % % 4(@)(@@) % وشعر كنور الروض لاءمت بينه % بقول إذا ما أحزن الشعر أسهلا % PageV01P976 البحر : سريع 1(@)(@@) % قد أدرك الحاجة ممنوعة % وتولع النفس بما لاتنال % % 2(@)(@@) % والهم ما أمسكته في الحشا % % داء وبعض الداء لا يستقال % % 3(@)(@@) % فاحتمل الهم على عاتق % إن لم تساعفك العلندى الجلال % % PageV01P977 البحر : رجز تام 1(@)(@@) % لما رأيت الحظ حظ الجاهل % % ولم أر المغبون غير العاقل % 2(@)(@@) % رحلت عنسا من شراب بابل % فبت من عقلي على مراحل % PageV01P978 البحر : خفيف تام 1(@)(@@) % قد تخللت مسلك الروح مني % % ولذا سمي الخليل خليلا % % 2(@)(@@) % فإذا ما انطقت كنت حديثي % % وإذا ما سكت كنت الغليلا % % PageV01P979 البحر : بسيط تام 1(@)(@@) % ماذا منيت بغزال له عنق % كنقنق الدو إن ولى وإن مثلا % % 2(@)(@@) % عنق الزرافة ما بالي وبالكم % % تكفرون رجالا كفروا رجلا % % PageV01P980 البحر : طويل 1(@)(@@) % زني القوم حتى تعرفي عند زونهم % % إذا رفع الميزان كيف أميل % PageV01P981 البحر : طويل 1(@)(@@) % شفاء العمى طول السؤال وإنما % % تمام العمى طول السكوت على الجهل % 2(@)(@@) % فكن سائلا عما عناك فإنما % % دعيت أخا عقل لتبعث بالعقل % PageV01P982 البحر : طويل 1(@)(@@) % وما الناس إلا صاحباك فمنهم % % سخي ومغلول اليدين 
urn:cts:arabLit:0167BashsharIbnBurdShacir.Diwan.JK007613-ara1:ms213# من البخل % 2(@)(@@) % فسامح يدا ما أمكنتك فإنها % % تقل وتثري والعواذل في شغل % % PageV01P983 البحر : طويل 1(@)(@@) % إذا لم أرد تعجيل حاجة صاحب % منعت وبعض المنع خير من المطل % % 2(@)(@@) % وعدت ولم تكره وأخلفت طائعا % لعمري لقد بالغت في البخل والجهل % % PageV01P984 البحر : خفيف تام 1(@)(@@) % قرب دار الحبيب قرة عين % وكأن البعاد في القلب ثكل % 2(@)(@@) % إن موت الذي يموت من الح % ب عفيفا له على الناس فضل % % PageV01P985 البحر : خفيف تام 1(@)(@@) % فضحت جودها بطول مطال % حالفته وآفة الجود مطل % % 2(@)(@@) % هي في قلبه وبين يديه % ومع النجم بذلها كيف يسلو % % PageV01P986 البحر : طويل 1(@)(@@) % خليلي إن الموت ليس بناهل % وليس الذي يهدي المنايا بغافل % 2(@)(@@) % خليلي يفني الموت كل قبيلة % وما أنا إلا في سبيل القبائل % % 3(@)(@@) % فروحا على مالي كلا من فضوله % فما تجمع الأموال إلا لآكل % % 4(@)(@@) % إذا أنا لم أنفع بجاهي ولم أجد % % بمالي طالتني يد المتطاول % % PageV01P987 البحر : طويل 1(@)(@@) % إذا المرء لم يفضل وقام بكله % فليس به بأس وليس بكامل % % 2(@)(@@) % وإن كان ذا فضل وقام بكله % فسام به أهل العلا والفضائل % % 3(@)(@@) % وإن كان لا فضل ولم يغن كله % فناد به في الناس هل من منازل % % PageV01P988 البحر : طويل 1(@)(@@) % ومثلك قد سيرته بقصيدة % فسار ولم يبرح عراص المنازل % 2(@)(@@) % رميت به شرقا وغربا فأصبحت % به الأرض ملأى من مقيم وراحل % PageV01P989 البحر : طويل 1(@)(@@) % حذف المنى عنه المشمر في الهدى ، % وأرى مناك طويلة الأذيال % 2(@)(@@) % % والموت يقطع حيلة المحتال % % 3(@)(@@) % قست السؤال ، فكان أعظم قيمة % من كل عارفة جرت بسؤال % % 4(@)(@@) % فإذا ابتليت ببذل وجهك سائلا % % فابذله للمتكرم المفضال % % 5(@)(@@) % وإذا خشيت تعذرا في بلدة % فاشدد يديك بعاجل الترحال % 6(@)(@@) % واصبر على غير الزمان فإنما % % فرج الشدائد مثل حل عقال % % PageV01P990 البحر : هزج 1(@)(@@) % وشخص طيب الأردا % % ن لا تعرف أمثاله % % 2(@)(@@) % بكى جوعا وشاحاه % % وقد أشبع خلخاله % % 3(@)(@@) % أتانا يحمل الشوق % % وما يحمل أوصاله % 4(@)(@@) % قتلت السر كتمانا % وقتل السر أبقى له % PageV01P991 البحر : طويل 1(@)(@@) % وأرض تهب الريح فيها مريضة % حسور لطرف الناظر المتأمل % 2(@)(@@) % إذا احترقت مجت سرابا كأنه % % من المنظر الأعلى ملاء الغواسل % % PageV01P992 البحر : طويل 1(@)(@@) % دعيني أصب من متعة قبل رقدة % % تكاد لها 
urn:cts:arabLit:0167BashsharIbnBurdShacir.Diwan.JK007613-ara1:ms214# نفس الشقيق تزول % 2(@)(@@) % وإني لآتي الأمر أعرف غيه % % مرارا وحلمي في الرجال أصيل % 3(@)(@@) % ولما رأيت الدار وحشا بها المها % % ترود وخيطان النعام تجول % 4(@)(@@) % ذكرت بها عيشا فقلت لصاحبي % % كأن لم يكن ماكان حين يزول % 5(@)(@@) % وما حاجتي لو ساعد الدهر بالمنى % % كعاب عليها لؤلؤ وشكول % % 6(@)(@@) % بدا لي أن الدهر يقدح في الصفا % % وأن بقائي إن حييت قليل % % 7(@)(@@) % فعش خائفا للموت أو غير خائف % % على كل نفس للحمام دليل % % 8(@)(@@) % خليلك ما قدمت من عمل التقى % % وليس لأيام المنون خليل % % 9(@)(@@) % أقول لقلبي وهو يرنو إلى الصبا % % علام التصابي والحوادث غول % % 10(@)(@@) % لعلك ترجو أن تعيش مخلدا % % أبى ذاك شبان لنا وكهول % % PageV01P993 البحر : خفيف تام 1(@)(@@) % كيف يبكي لمحبس في طلول % % من سيقضي لحبس يوم طويل % % 2(@)(@@) % إن في الحشر والحساب لشغلا % عن وقوف بكل رسم محيل % % PageV01P994 البحر : كامل تام 1(@)(@@) % وإذا المطي سبحن في أعطافه % % فات المطي بكاهل وتليل % % 2(@)(@@) % فكأنه والناعجات يردنه % قدح يطلع من قداح مجيل % % PageV01P995 البحر : وافر تام 1(@)(@@) % يكون الخال في خد نقي % % فيكسبه الملاحة والجمالا % % 2(@)(@@) % ويؤنقه لأعين مبصريه % % فكيف إذا رأيت اللون خالا % % PageV01P996 البحر : طويل 1(@)(@@) % وللدهر أيام قصار إذا سرت % % بخير ويوم الحزن منه طويل % % PageV01P997 البحر : كامل تام 1(@)(@@) % يا من برائق ريقه يحيي الورى % % وبسحر عينيه النواعس يقتل % 2(@)(@@) % من سحر عينيك المهاة تعلمت % % وكذلك الغزلان منها تغزل % % PageV01P998 البحر : طويل 1(@)(@@) % كفى حزنا أن الجواد مقتر % عليه ولا معروف عند بخيل % % PageV01P999 البحر : كامل تام 1(@)(@@) % قل للأمير إذا نزلت به % % إن المباجل ذمها عجل % % 2(@)(@@) % بئس المروءة من ذوي حسب % % جاعت قرابتهم وقد ثملوا % % 3(@)(@@) % شبع الأمير وجوع صاحبه % % عار الحياة فأطعموا وكلوا % % PageV01P1000 البحر : كامل تام 1(@)(@@) % إني لأكتم في الحشا حبا لها % % لو كان أصبح فوقها لأظلها % % 2(@)(@@) % ويبيت بين جوانحي وجد بها % % لو بات تحت فراشها لأقلها % % PageV01P1001 البحر : كامل تام 1(@)(@@) % إن التي زعمت فؤادك ملها % % خلقت هواك كما خلقت هوى لها % % 2(@)(@@) % بيضاء باكرها النعيم فصاغها % % بلبانة فأرقها وأجلها % % 3(@)(@@) % حجبت تحيتها فقلت لصاحبي % % ما كان أكثرها لنا وأقلها % % 4(@)(@@) % وإذا وجدت لها وساوس سلوة % شفع الضمير لها إلي فسلها % % PageV01P1002 البحر : وافر 
urn:cts:arabLit:0167BashsharIbnBurdShacir.Diwan.JK007613-ara1:ms215# تام 1(@)(@@) % لمروان مواعد كاذبات % كما برق الحياء وما استهلا % % PageV01P1003 البحر : خفيف تام 1(@)(@@) % قل لشهر الصيام أنحلت جسمي % % إن ميقاتنا طلوع الهلال % 2(@)(@@) % اجهد الآن كل جهدك فينا % % سترى ما يكون في شوال % PageV01P1004 البحر : مجزوء الكامل 1(@)(@@) % لي حيلة في من ينم % وليس في الكذاب حيله % % 2(@)(@@) % من كان يحلف ما يقو % % ل فحيلتي فيه قليله % % PageV01P1005 البحر : متقارب تام 1(@)(@@) % ويسبق إنجازه وعده % % وليس يحيل على باطل % % 2(@)(@@) % يرى أنه أبخل الباخلي % % ن إذا جاد بالروح للسائل % % 3(@)(@@) % ومبتسم ضاحك وجهه % % إذا صال كل فتى باسل % % 4(@)(@@) % ومستحقر معضلات الأمو % % ر فلا يرجع الطرف عن هائل % % PageV01P1006 البحر : متقارب تام 1(@)(@@) % أقول إذا قمت عن ظهره % % بنفسي من لا يخاف الحبل % % PageV01P1007 البحر : متقارب تام 1(@)(@@) % ونبئت قوما بهم جنة % يقولون من ذا وكنت العلم % % 2(@)(@@) % ألا أيها السائلي جاهدا % % ليعرفني أنا أنف الكرم % % 3(@)(@@) % نمت في الكرام بني عامر % فروعي وأصلي قريش العجم % 4(@)(@@) % فإني لأغني مقام الفتى % % وأصبي الفتاة فما تعتصم % 5(@)(@@) % وجارية خلقت وحدها % % كأن النساء لديها خدم % % 6(@)(@@) % دوار العذراى إذا زرنها % % أطفن بحوراء مثل الصنم % % 7(@)(@@) % يظلن يمسحن أركانها % % كما يمسح الحجر المستلم % 8(@)(@@) % وبيضاء يضحك ماء الشبا % % ب في وجهها لك إذ تبتسم % % 9(@)(@@) % ظمئت إليها فلم تسقني % % بري ولم تشفني من سقم % 10(@)(@@) % وقالت هويت فمت راشدا % كما مات عروة غما بغم % % PageV01P1008 11(@)(@@) % فلما رأيت الهوى قاتلي % % ولست بجار ولا بابن عم % % 12(@)(@@) % دسست إليها أبا مجلز % وأي فتى إن أصاب اعتزم % % 13(@)(@@) % فما زال حتى أنابت له % % فراح وحل لنا ما حرم % % 14(@)(@@) % أصفراء ليس الفتى صخرة % ولكنه نصب هم وغم % % 15(@)(@@) % صببت هواك على قلبه % % فضاق وأعلن ما قد كتم % % 16(@)(@@) % أقول لها حين قل الثراء % وضاق المراد وأودى النعم % % 17(@)(@@) % إذا ما افتقرت فأحيي السرى % % إلى ابن العلاء طبيب العدم % % 18(@)(@@) % دعاني إلى عمر و جوده % % وقول العشيرة بحر خضم % % 19(@)(@@) % ولولا الذي زعموا لم أكن % % لأمدح ريحانة قبل شم % 20(@)(@@) % ألا أيها الطالب المبتغي % % نجوم السماء بسعي أمم % PageV01P1009 21(@)(@@) % سمعت بمكرمة ابن العلا % فأنشأت تطلبها لست ثم % 22(@)(@@) % إذا عرض اللهو في صدره % % لها بالعطاء وضرب البهم % % 23(@)(@@) % يلذ العطاء وسفك الدما % % ء 
urn:cts:arabLit:0167BashsharIbnBurdShacir.Diwan.JK007613-ara1:ms216# ويغدو على نعم أو نقم % % 24(@)(@@) % فقل للخليفة إن جئته % % نصوحا ولا خير في متهم % % 25(@)(@@) % إذا أيقظتك حروب العدا % % فنبه لها عمرا ثم نم % 26(@)(@@) % فتى لا ينام على ثأره % ولايشرب الماء إلا بدم % % 27(@)(@@) % إذا ما غزا بشرت طيره % بفتح وبشرنا بالنعم % % 28(@)(@@) % إذا قال تم على قوله % % ومات العناء بلا أو نعم % % 29(@)(@@) % وبعض الرجال بموعوده % % قريب وبالفعل تحت الرجم % % 30(@)(@@) % كجاري السراب ترى لمعه % ولست بواجده عند كم % % PageV01P1010 البحر : متقارب تام 1(@)(@@) % يطوف العفاة بأبوابه % % كطوف الحجيج ببيت الحرم % % PageV01P1011 البحر : طويل 1(@)(@@) % أبى طلل بالجزع أن يتكلما % % وماذا عليه لو أجاب متيما % % 2(@)(@@) % وبالفرع آثار بقين وباللوى % % ملاعب لا يعرفن إلا توهما % % 3(@)(@@) % إذا ما غضبنا غضبة مضرية % هتكنا حجاب الشمس أو تمطر % % 4(@)(@@) % إذا ما أعرنا سيدا من قبيلة % ذرى منبر صلى علينا وسلما % % 5(@)(@@) % وإنا لقوم ما تزال جيادنا % % تساور ملكا أو تناهب مغنما % % 6(@)(@@) % خلقنا سماء فوقنا بنجومها % % سيوفا ونقعا يقبض الطرف أقتما % % 7(@)(@@) % ومحبس يوم جرت الحرب ضنكه % دنا ظله واحمر حتى تحمما % % 8(@)(@@) % تفوقت أخلاق الصبا وتقدمت % % همومي حتى لم أجد متقدما % % 9(@)(@@) % فهذا أوان استحيت النفس وارعوى % % لداتي وراجعت الذي كان أقوما % % 10(@)(@@) % ويوم كتنور الإماء سجرنه % % وأوقدن فيه الجزل حتى تضرما % % PageV01P1012 11(@)(@@) % رميت بنفسي في أجيج سمومه % % وبالعيس حتى بض منخرها دما % % PageV01P1013 البحر : طويل 1(@)(@@) % أبا مسلم ما طول عيش بدائم % ولا سالم عما قليل بسالم % % 2(@)(@@) % على الملك الجبار يقتحم الردى % % ويصرعه في المأزق المتلاحم % % 3(@)(@@) % كأنك لم تسمع بقتل متوج % % عظيم ولم تسمع بفتك الأعاجم % % 4(@)(@@) % تقسم كسرى رهطه بسيوفهم % % وأمسى أبو العباس أحلام نائم % % 5(@)(@@) % وقد كان لا يخشى انقلاب مكيدة % عليه ولا جري النحوس الأشائم % % 6(@)(@@) % مقيما على اللذات حتى بدت له % % وجوه المنايا حاسرات العمائم % % 7(@)(@@) % وقد ترد الأيام غرا وربما % % وردن كلوحا باديات الشكائم - % 8(@)(@@) % ومروان قد دارت على رأسه الرحى % % وكان لما أجرمت نزر الجرائم % % 9(@)(@@) % فأصبحت تجري سادرا في طريقهم % % ولاتتقي أشباه تلك النقائم % % 10(@)(@@) % تجردت للإسلام تعفو سبيله % % وتعري مطاه لليوث الضراغم % % PageV01P1014 11(@)(@@) % فما زلت حتى استنصر الدين أهله % % عليك فعادوا بالسيوف الصوارم % % 12(@)(@@) % فرم زورا ينجيك يا ابن وشيكة % فلست 
urn:cts:arabLit:0167BashsharIbnBurdShacir.Diwan.JK007613-ara1:ms217# بناج من مضيم وضائم % % 13(@)(@@) % لحى الله قوما رأسوك عليهم % وما زلت مرؤوسا خبيث المطاعم % % 14(@)(@@) % أقول لبسام عليه جلالة % غدا أريحيا عاشقا للمكارم % % 15(@)(@@) % من الهاشميين الدعاة إلى الهدى % % جهارا ومن يهديك مثل ابن هاشم % % 16(@)(@@) % سراج لعين المستضيء وتارة % يكون ظلاما للعدو المزاحم % % 17(@)(@@) % إذا بلغ الرأي المشورة فاستعن % % برأي نصيح أونصيحة حازم % 18(@)(@@) % ولا تجعل الشورى عليك غضاضة % مكان الخوافي قوة للقوادم % % 19(@)(@@) % وما خير كف أمسك الغل أختها % % وما خير سيف لم يؤيد بقائم % % 20(@)(@@) % وخل الهوينا للضعيف ولاتكن % نؤوما فإن الحزم ليس بنائم % % PageV01P1015 21(@)(@@) % وحارب إذا لم تعط إلا ظلامة % شبا الحرب خير من قبول المظالم % % 22(@)(@@) % وأدن على القربى المقرب نفسه % % ولا تشهد الشورى امرأ غير كاتم % % 23(@)(@@) % فإنك لا تستطرد الهم بالمنى % % ولا تبلغ العليا بغير المكارم % 24(@)(@@) % إذا كنت فردا هرك القوم مقبلا % وإن كنت أدنى لم تفز بالعزائم % % 25(@)(@@) % وما قرع الأقوام مثل مشيع % أريب ولا جلى العمى مثل عالم % PageV01P1016 البحر : مجزوء الوافر 1(@)(@@) % توعدني أبو خلف % وعن أوتاره ناما % % 2(@)(@@) % بسيف لأبي صفر % % ة لا يقطع إبهاما % % 3(@)(@@) % كأن الورس يعلوه % % إذا ما صدره قاما % % PageV01P1017 البحر : خفيف تام 1(@)(@@) % يا بن موسى ماذا يقول الإمام % % في فتاة في القلب منها أوام % % 2(@)(@@) % بت من حبها أوقر بالكأ % % س ويهفو على فؤادي الهيام % % 3(@)(@@) % ويحها كاعبا تدل بجهم % كعثبي كأنه حمام % % 4(@)(@@) % لم يكن بينها وبيني إلا % % كتب العاشقين والأحلام % % 5(@)(@@) % يا بن موسى اسقني ودع عنك سلمى % % إن سلمى حمى وفي احتشام % % 6(@)(@@) % رب كأس كالسلسبيل تعلل % % ت بها والأنام عني نيام % % 7(@)(@@) % حبست للشراة في بيت رأس % عتقت عانسا عليها الختام % % 8(@)(@@) % نفحت نفحة فهزت نديمي % % بنسيم وانشق عنها الزكام % 9(@)(@@) % وكأن المعلول منها إذا را % % ح شج في لسانه برسام % % 10(@)(@@) % صدمته الشمول حتى بعيني % % ه انكسار وفي المفاصل خام % % PageV01P1018 11(@)(@@) % وهو باقي الإطراف حيت به الكأ % % س وماتت أوصاله والكلام % % 12(@)(@@) % وفتى يشرب المدامة بالما % % ل ويمشي يروم ما لا يرام % % 13(@)(@@) % أنفدت كأسه الدنانير حتى % % ذهب العين واستمر السوام % % 14(@)(@@) % تركته الصهباء يرنو بعين % % نام إنسانها وليست تنام % % 15(@)(@@) % حن من شربة تعل بأخرى % % وبكى حين سار 
urn:cts:arabLit:0167BashsharIbnBurdShacir.Diwan.JK007613-ara1:ms218# فيه المدام % % 16(@)(@@) % كان لي صاحبا فأودى به الده % % ر وفارقته عليه السلام % % 17(@)(@@) % بقي الناس بعد هلك نداما % % ي وقوعا لم يشعروا ما الكلام % 18(@)(@@) % كجزور الأيسار لا كبد في % % ها لباغ ولا عليها سنام % % 19(@)(@@) % يا بن موسى فقد الحبيب على العي % % ن قذاة وفي الفؤاد سقام % 20(@)(@@) % كيف يصفوا لي النعيم وحيدا % والأخلاء في المقابر هام % PageV01P1019 21(@)(@@) % نفستهم علي أم المنايا % % فأنامتهم بعنف فناموا % % 22(@)(@@) % لا يغيض انسجام عيني عليهم % إنما غاية الحزين السجام % PageV01P1020 البحر : مجزوء الرمل 1(@)(@@) % سترى حول سريري % % حسرا يندبن لطما % % 2(@)(@@) % يا قتيلا قتلته % % عبدة الحوراء ظلما % % PageV01P1021 البحر : بسيط تام 1(@)(@@) % ما قام أير حمار فامتلا شبقا % إلا تحرك عرق في است تسنيم % % PageV01P1022 البحر : كامل تام 1(@)(@@) % يا عبد قد طال المطال فأنعمي % % واشفي فؤاد فتى يهيم متيم % PageV01P1023 البحر : خفيف تام 1(@)(@@) % عبد يا همتي عليك السلام % % فيم يجفي حبيبك المستهام % 2(@)(@@) % نزل الحب منزلا في فؤادي % % وله فيه مجلس ومقام % PageV01P1024 البحر : طويل 1(@)(@@) % وصافية تعشي العيون رقيقة % % رهينة عام في الدنان وعام % 2(@)(@@) % أدرنا بها الكأس الروية بيننا % % من الليل حتى انجاب كل ظلام % 3(@)(@@) % فما ذر قرن الشمس حتى كأننا % % من العي نحكي أحمد بن هشام % PageV01P1025 البحر : رجز تام 1(@)(@@) % ما زال ما منيتني من همي % % الوعد غم فاسترح من غمي % % 2(@)(@@) % إن لم ترد مدحي فراقب ذمي % % PageV01P1026 البحر : طويل 1(@)(@@) % وبكر كنوار الربيع حديثها % % تروق بوجه واضح وقوام % PageV01P1027 البحر : رمل تام 1(@)(@@) % أنت أنف الجود إن زايلته % % عطس الجود بأنف مصطلم % % PageV01P1028 البحر : طويل 1(@)(@@) % رأيت السهيلين استوى الجود فيهما % % على بعد ذا من ذاك في حكم حاكم % 2(@)(@@) % سهيل بن عثمان يجود بماله % % كما جاد بالوجعا سهيل بن سالم % PageV01P1029 البحر : طويل 1(@)(@@) % رضيت الهوى إذ حل بي متخيرا % نديما وما غيري له من ينادمه % 2(@)(@@) % أعاطيه كأس الصبر بيني وبينه % % يقاسمنيها مرة وأقاسمه % PageV01P1030 البحر : طويل 1(@)(@@) % متى يبلغ البنيان يوما تمامه % % إذا كنت تبنيه وغيرك يهدم % % PageV01P1031 البحر : متقارب تام 1(@)(@@) % تبوح بسرك ضيقا به % وتبغي لسرك من يكتم % 2(@)(@@) % وكتمانك السر عمن تخا % % ف ومن لا تخوفه أحزم % 3(@)(@@) % إذا ضاع سرك من مخبر % فأنت إذا لمته ألوم 
urn:cts:arabLit:0167BashsharIbnBurdShacir.Diwan.JK007613-ara1:ms219# % PageV01P1032 البحر : سريع 1(@)(@@) % إن كنت حاولت هوانا فما % % هنت وما في الهون لي من مقام % 2(@)(@@) % في الناس أبدال ولي مزحل % عن منزل ناء ومرعى وخام % 3(@)(@@) % لا نائل منك ولا موعد % ولا رسول فعليك السلام % PageV01P1033 البحر : متقارب تام 1(@)(@@) % على النفس من عينها شاهد % فكاتم حديثك أو نمه % % PageV01P1034 البحر : وافر تام 1(@)(@@) % تتابع نحو داعيها سراعا % كما نثر الفريد من النظام % % PageV01P1035 البحر : وافر تام 1(@)(@@) % بدا لك ضوء ما احتجبت عليه % % بدو الشمس من خلل الغمام % % PageV01P1036 البحر : كامل تام 1(@)(@@) % والجد ليس بزائد في رزق من % يسعى وليس بنائم عن نائم % % 2(@)(@@) % ويموت راعي الضأن عند ثمامه % موت الطبيب الفيلسوف العالم % PageV01P1037 البحر : كامل تام 1(@)(@@) % وسهرتم في المكرمات وكسبها % % سهرا بغير هوى وغير سقام % PageV01P1038 البحر : خفيف تام 1(@)(@@) % طرقتنا ذات البنان الأحم % حبذا النوم للخيال الملم % 2(@)(@@) % وحديث نمى إليها فلم تر % % قب بيانا وباطل القول ينمي % % 3(@)(@@) % لو سقتني سما لقلت دعوها % % لا يضر الحوار وطأة أم % PageV01P1039 البحر : وافر تام 1(@)(@@) % وقوم ينظرون إلي شزرا % % كأن كلومهم مني دوام % 2(@)(@@) % سيجدي حلمهم أو ينكروني % % فإن تقدمي قبل انتقامي % % PageV01P1040 البحر : طويل 1(@)(@@) % نهاني أمير المؤمنين عن الصبا % % فدون الغواني عومة لا أعومها % % 2(@)(@@) % أغيد مطراب العشيات مرعش % من الخمر لا يلقاك إلا نديمها % % 3(@)(@@) % كررنا أحاديث الزمان الذي مضى % % فلذ لنا محمودها وذميمها % % 4(@)(@@) % فوالله ما أدري أقضى لبانة % من الصحو أم ولى بنفس يلومها % % 5(@)(@@) % وإني لفياض اليدين على الغنى % % وفي الفقر عف النفس عما يذيمها % % 6(@)(@@) % وإني لمخشي العرام وربما % % صفحت عن العوراء باد شكيمها % % 7(@)(@@) % إذا ما ولي العهد قضى لبانتي % % وقف بأخرى عنده أستديمها % % 8(@)(@@) % فدى لك ما ألقت إليك مطيتي % % إذا فتنة قامت وقام زعيمها % % 9(@)(@@) % تقلبت في بيت النبوءة يافعا % وخرقا ومعقودا عليك تميمها % % PageV01P1041 البحر : كامل تام 1(@)(@@) % ووطئت أردية الفتوة كلها % % وفضضت خاتم طينها المختوما % % 2(@)(@@) % وصحوت إلا من لقاء محدث % حسن الحديث يزيدني تعليما % % 3(@)(@@) % إن الوقار وما ترى بمفارقي % % صرف الغواية فانصرفت كريما % % 4(@)(@@) % وحلمت بعد جهالة فهجرتني % % غضبا علي بأن رجعت حليما % % PageV01P1042 البحر : مجزوء الخفيف 1(@)(@@) % يا أبا الفضل لا تنم % وقع الذئب في الغنم % % 2(@)(@@) % إن حماد 
urn:cts:arabLit:0167BashsharIbnBurdShacir.Diwan.JK007613-ara1:ms220# عجرد % إن رأى غفلة هجم % 3(@)(@@) % بين فخذيه حربة % في غلاف من الأدم % % 4(@)(@@) % إن خلا البيت ساعة % مجمج الميم بالقلم % % PageV01P1043 البحر : بسيط تام 1(@)(@@) % وصاحب نافع لي طول صحبته % % لا ينفع الدهر إلا وهو محموم % 2(@)(@@) % تأتيك في نافض الحمى مكارمه % % وإن أفاق بدا في وجهه اللوم % % PageV01P1044 البحر : متقارب تام 1(@)(@@) % وعي الفعال كعي المقال % وفي الصمت عي كعي الكلم % PageV01P1045 البحر : كامل تام 1(@)(@@) % أنس غرائر ما هممن بريبة % كظباء مكة صيدهن حرام % 2(@)(@@) % يحسبن من لين الحديث زوانيا % ويصدهن عن الخنا الإسلام % PageV01P1046 البحر : سريع 1(@)(@@) % يزدحم الناس على بابه % % والمورد العذب كثير الزحام % PageV01P1047 البحر : طويل 1(@)(@@) % إذا ابتسمت جادت جفوني بوابل % من الغيث أجرته بروق المباسم % % PageV01P1048 البحر : طويل 1(@)(@@) % أيشتم عرضي الباهلي بعرضه % % لعمرك إني بعدها لمشتم % 2(@)(@@) % أليس من أشراط القيامة أن يرى % % كريم يلاحيه لئيم مذمم % PageV01P1049 البحر : طويل 1(@)(@@) % ولن تبلغ العليا بغير الدراهم % % PageV01P1050 البحر : طويل 1(@)(@@) % أفيضا دما إن الرزايا لها قيم % % PageV01P1051 البحر : طويل 1(@)(@@) % وأفسى من الظربان في ليلة الكرى % % وأخلف من صقر وإن كان قد طعم % PageV01P1052 البحر : طويل 1(@)(@@) % إذا أكره الخطي فينا وفيهم % % جرى ماؤه في لامنا وتحطما % % PageV01P1053 البحر : طويل 1(@)(@@) % أبا أحمد طال انتظاري ثلاثة % ووعدك داء مثل داء المبلسم % % 2(@)(@@) % أرحني بيأس أو بتعجيل حاجة % % وأيت بها ليس الندى بمحرم % % 3(@)(@@) % وإلا فبين لي بها وجه مخرج % % كفى ببيان من فصيح وأعجم % % 4(@)(@@) % ولا تك العذراء يوم نكاحها % % إذا استوذنت في نفسها لم تكلم % % PageV01P1054 البحر : بسيط تام 1(@)(@@) % إن النساء مضيئات ظواهرها % % لكن بواطنها ظلم وإظلام % % 2(@)(@@) % كالدهر في صرفه سقم وعافية % % وكالزمان له بؤس وإنعام % % PageV01P1055 البحر : سريع 1(@)(@@) % وكل موجود إذا ما نأى % % من أنا أهواه فمعدوم % % PageV01P1056 البحر : بسيط تام 1(@)(@@) % وذات دل كان البدر صورتها % % باتت تغني عميد القلب سكرانا % % 2(@)(@@) % إن العيون التي في طرفها حور % قتلننا ثم لم يحيين قتلانا % % 3(@)(@@) % فقلت أحسنت يا سؤلي ويا أملي % % فأسمعيني جزاك الله إحسانا % % 4(@)(@@) % يا حبذا جبل الريان من جبل % % وحبذا ساكن الريان من كانا % % 5(@)(@@) % قالت فهلا فدتك النفس أحسن من % % هذا لمن كان صب القلب حيرانا % % 6(@)(@@) % ياقوم أذني لبعض الحي عاشقة % والأذن تعشق 
urn:cts:arabLit:0167BashsharIbnBurdShacir.Diwan.JK007613-ara1:ms221# قبل العين أحيانا % % 7(@)(@@) % فقلت أحسنت أنت الشمس طالعة % أضرمت في القلب والأحشاء نيرانا % % 8(@)(@@) % فأسمعيني صوتا مطربا هزجا % يزيد صبا محبا فيك أشجانا % % 9(@)(@@) % يا ليتني كنت تفاحا مفلجة % أو كنت من قضب الريحان ريحانا % % 10(@)(@@) % حتى إذا وجدت ريحي فأعجبها % % ونحن في خلوة مثلت إنسانا % % PageV01P1057 11(@)(@@) % فحركت عودها ثم انثنت طربا % تشدو به ثم لا تخفيه كتمانا % % 12(@)(@@) % أصبحت أطوع خلق الله كلهم % لأكثر الخلق لي في الحب عصيانا % % 13(@)(@@) % فقلت : أطربتنا يا زين مجلسنا % % فهات إنك بالإحسان أولانا % % 14(@)(@@) % لو كنت أعلم أن الحب يقتلني % % أعددت لي قبل أن ألقاك أكفانا % % 15(@)(@@) % فغنت الشرب صوتا مؤنقا رملا % يذكي السرور ويبكي العين ألوانا % % 16(@)(@@) % لا يقتل الله من دامت مودته % % والله يقتل أهل الغدر أحيانا % % 17(@)(@@) % لا تعذلوني فإني من تذكرها % % نشوان هل يعذل الصاحون نشوانا % % 18(@)(@@) % لم أدر ما وصفها يقظان قد علمت % % وقد لهوت بها في النوم أحيانا % % 19(@)(@@) % باتت تناولني فاها فألثمه % جنية زوجت في النوم إنسانا % % PageV01P1058 البحر : متقارب تام 1(@)(@@) % أمثل بني مضر وائل % فقدتك من فاخر ما أجن % 2(@)(@@) % أفي النوم هذا أبا منذر % فخيرا رأيت وخيرا يكن % 3(@)(@@) % رأيتك والفخر في مثلها % % كعاجنة غير ما تطحن % PageV01P1059 البحر : وافر تام 1(@)(@@) % ودعجاء المحاجر من معد % كأن حديثها ثمر الجنان % % 2(@)(@@) % إذا قامت لمشيتها تثنت % كأن عظامها من خيزران % 3(@)(@@) % ينسيك المنى نظر إليها % % ويصرف وجهها وجه الزمان % PageV01P1060 البحر : خفيف تام 1(@)(@@) % ربما يثقل الجليس وإن كا % % ن خفيفا في كفة الميزان % 2(@)(@@) % ولقد قلت إذ أطل على القود % % م ثقيل يربي على ثهلان % 3(@)(@@) % كيف لا تحمل الأمانة أرض % حملت فوقها أبا سفيان % PageV01P1061 البحر : سريع 1(@)(@@) % وغادة سوداء براقة % كالماء في طيب وفي لين % % 2(@)(@@) % كأنها صيغت لمن نالها % % من عنبر بالمسك معجون % PageV01P1062 البحر : سريع 1(@)(@@) % شط بسلمى عاجل البين % وجاورت أسد بني القين % % 2(@)(@@) % ورنت النفس لها رنة % كادت لها تنشق نصفين % % 3(@)(@@) % يا ابنة من لا أشتهي ذكره % % أخشى عليه علق الشين % 4(@)(@@) % والله لو ألقاك لا أتقي % % عينا لقبلتك ألفين % % 5(@)(@@) % طالبتها ديني فراغت به % % وعلقت قلبي مع الدين % % 6(@)(@@) % فصرت كالعير غدا طالبا % قرنا فلم يرجع بأذنين % PageV01P1063 البحر : وافر 
urn:cts:arabLit:0167BashsharIbnBurdShacir.Diwan.JK007613-ara1:ms222# تام 1(@)(@@) % دعا بفراق من تهوى أبان % ففاض الدمع واحترق الجنان % 2(@)(@@) % كأن شرارة وقعت بقلبي % % لها في مقلتي ودمي استنان % 3(@)(@@) % إذا أنشدت أو نسمت عليها % % رياح الصيف هاج لها دخان % % PageV01P1064 البحر : كامل تام 1(@)(@@) % إن أمس منقبض اليدين عن الغنى % % وعن العدو مخيس الشيطان % % 2(@)(@@) % فلقد أروح على اللئام مسلطا % % ثلج المقيل منعم الندمان % 3(@)(@@) % في ظل عيش عشيرة محمودة % تندى يدي ويخاف فرط لساني % % 4(@)(@@) % أزمان جني الشباب مطاوع % وإذ الأمير علي من حران % 5(@)(@@) % ريم بأحوية العراق إذا بدا % % برقت عليه أكله المرجان % 6(@)(@@) % فاكحل بعبدة مقلتيك من القذى % % وبوشك رؤيتها من الهملان % 7(@)(@@) % فلقرب من تهوى وأنت متيم % أشفى لدائك من بني مروان % % PageV01P1065 البحر : بسيط تام 1(@)(@@) % وقائل هات شوقنا فقلت له % أنائم أنت يا عمرو بن سمان % % 2(@)(@@) % أما سمعت بما قد شاع في مضر % وفي الحليفين من نجد وقحطان % 3(@)(@@) % قال الخليفة لا تنسب بجارية % إياك إياك أن تشقى بعصيان % PageV01P1066 البحر : مجزوء الرمل 1(@)(@@) % نظرت عيني لحيني % % نظرا وافق شيني % % 2(@)(@@) % سترت لما رأتني % % دونه بالراحتين % 3(@)(@@) % فبدت منه فضول % % لن توارى باليدين % 4(@)(@@) % فانثنت حتى توارى % % بين طي العكنتين % % 5(@)(@@) % فتمنيت وقلبي % % للهوى في زفرتين % % 6(@)(@@) % أنني كنت عليه % % ساعة أو ساعتين % % PageV01P1067 البحر : وافر تام 1(@)(@@) % أمامة قد وصفت لنا بحسن % وإنا لا نراك فالمسينا % % PageV01P1068 البحر : سريع 1(@)(@@) % خليفة يزني بعماته % % يلعب بالدبوق والصولجان % 2(@)(@@) % أبدلنا الله به غيره % % ودس موسى في حر الخيزران % PageV01P1069 البحر : بسيط تام 1(@)(@@) % بكى حريب فوقره بتعزية % مات ابن نهيا وقد كانا شريكين % % 2(@)(@@) % تفاوضا حين شابا في نسائهما % % وحللا كل شيء بين رجلين % % 3(@)(@@) % أمسى حريب بما أسدى له وغدا % % كراكب اثنين يرجو قوة اثنين % % 4(@)(@@) % حتى إذا أخذا في غير وجههما % % تفرقا وهوى بين الطريقين % % PageV01P1070 البحر : منسرح 1(@)(@@) % والله لولا رضى الخليفة ما % % أعطيت ضيما علي في شجن % % 2(@)(@@) % وربما خير لابن آدم في ال % % كره وشق الهوى على البدن % % 3(@)(@@) % فاشرب على أبنة الزمان فما % % تلقى زمانا صفا من الأبن % % 4(@)(@@) % الله يعطيك من فواضله % % والمرء يغضي عينا على الكمن % 5(@)(@@) % قد عشت بين الريحان والراح وال % مزهر في ظل مجلس حسن % 6(@)(@@) % وقد ملأت البلاد 
urn:cts:arabLit:0167BashsharIbnBurdShacir.Diwan.JK007613-ara1:ms223# مابين يعبو % % ر إلى القيروان فاليمن % 7(@)(@@) % شعرا تصلي له العواتق والثي % % ب صلاة الغواة للوثن % 8(@)(@@) % ثم نهاني المهدي فانصرفت % نفسي صنيع الموفق اللقن % 9(@)(@@) % فالحمد لله لا شريك له % % ليس بباق شيء على الزمن % PageV01P1071 البحر : وافر تام 1(@)(@@) % عتبت على الزمان وأي حي % من الأحياء أعتبه الزمان % 2(@)(@@) % وآمنة من الحدثان تزري % % علي وليس من حدث أمان % 3(@)(@@) % وليس بزائل يرمي ويرمى % % معان مرة أو مستعان % 4(@)(@@) % متى تأب الكرامة من كريم % % فما لك عنده إلا الهوان % PageV01P1072 البحر : طويل 1(@)(@@) % خليلي من كعب أعينا أخاكما % % على دهره إن الكريم معين % 2(@)(@@) % ولا تبخلا بخل ابن قزعة إنه % % مخافة أن يرجى نداه حزين % 5(@)(@@) % % فلم تلقه إلا وأنت كمين % PageV01P1073 البحر : طويل 1(@)(@@) % إذا سلم المسكين طار فؤاده % مخافة سؤل واعتراه جنون % % PageV01P1074 البحر : بسيط تام 1(@)(@@) % حتى متى ليت شعري يابن يقطين % أثني عليك بما لا منك توليني % % 2(@)(@@) % أما علمت جزاك الله صالحة % عني وزادك خيرا يا بن يقطين % % 3(@)(@@) % إني أريدك للدنيا وزينتها % % ولا أريدك يوم الدين للدين % % PageV01P1075 البحر : خفيف تام 1(@)(@@) % خلقوا سادة فكانوا سواء % ككعوب القناة تحت السنان % % PageV01P1076 البحر : رجز تام 1(@)(@@) % قالوا العمى منظر قبيح % قلنا بفقدي لكم يهون % 2(@)(@@) % تالله ما في البلاد شيء % تأسى على فقده العيون % PageV01P1077 البحر : خفيف تام 1(@)(@@) % من فتاة صب الجمال عليها % % في حديث كلذة النشوان % 2(@)(@@) % ثم فارقت ذاك غير ذميم % كل عيش الدنيا وإن طال فان % PageV01P1078 البحر : متقارب تام 1(@)(@@) % إذا الحرب قامت بهم شمروا % % وكانوا أسنة خرصانها % % PageV01P1079 البحر : مجزوء الرمل 1(@)(@@) % سيدي خذ بي أتانا % عند باب الأصبهاني % % 2(@)(@@) % تيمتني ببنان % وبدل قد شجاني % % 3(@)(@@) % تيمتني يوم رحنا % % بثناياها الحسان % % 4(@)(@@) % وبغنج ودلال % % سل جسمي وبراني % % 5(@)(@@) % ولها خد أسيل % مثل خد الشيفراني % % 6(@)(@@) % فلذا مت ولو عش % % ت إذا طال هواني % % PageV01P1080 البحر : بسيط تام 1(@)(@@) % أنا المرعث لا أخفى على أحد % ذرت بي الشمس للقاصي وللداني % % PageV01P1081 البحر : بسيط تام 1(@)(@@) % حشاشة ودعتني يوم بينهم % وشيعتهم وخلتني وأحزاني % % 2(@)(@@) % وقد أشاروا بتسليم على حذر % % من الرقيب بأطراف وأجفان % % PageV01P1082 البحر : بسيط تام 1(@)(@@) % هل تعلمين وراء الحب منزلة % تدني إليك فإن الحب أقصاني % % 2(@)(@@) % يا رئم قولي لمثل 
urn:cts:arabLit:0167BashsharIbnBurdShacir.Diwan.JK007613-ara1:ms224# الرئم قد هجرت % يقظى فما بالها في النوم تغشاني % % 3(@)(@@) % لهفي عليها ولهفي من تذكرها % % يدنو تذكرها مني وتنآني % % 4(@)(@@) % إذ لا يزال لها طيف يؤرقني % % نشوان من حبها أو غير نشوان % PageV01P1083 البحر : بسيط تام 1(@)(@@) % من زادنا النقد زدنا في مودته % % ما يطلب الناس إلا كل رجحان % PageV01P1084 البحر : بسيط تام 1(@)(@@) % قد أذهب الداء حسادي بكثرتهم % % ولو فنوا عز دائي من يداويني % % 2(@)(@@) % لا عشت خلوا من الحساد إنهم % أعز فقدا من اللائي أحبوني % % 3(@)(@@) % أبقى لي الله حسادا وغمهم % % حتى يموتوا بداء غير مكنون % % PageV01P1085 البحر : رمل تام 1(@)(@@) % حسب قلبي ما به من حبها % % ضاق من كتمانه حتى علن % 2(@)(@@) % لا تلم فيها وحسن حبها % % كل ما قرت به العين حسن % PageV01P1086 البحر : وافر تام 1(@)(@@) % أهم بأن أقول وددت أني % % سلوت فما يطاوعني لساني % % PageV01P1087 البحر : وافر تام 1(@)(@@) % أحب بأن أكون على بيان % وأخشى أن أموت من البيان % 2(@)(@@) % فقد أصبحت لا فرحا بدنيا % % ولا مستنكرا دار الهوان % 3(@)(@@) % يقلبني الهوى ظهرا لبطن % فما أخفى على أحد يراني % % PageV01P1088 البحر : طويل 1(@)(@@) % وحمد كعصب البرد حملت صاحبي % % إلى ملك للصالحات قرين % PageV01P1089 البحر : طويل 1(@)(@@) % وجارية يغلي بأمثالها الفتى % % شعوف لألباب الرجال قتون % 2(@)(@@) % محضت لها الحوباء حتى استثرتها % % لسائس ملك أو كواعب عين % PageV01P1090 البحر : - - 1(@)(@@) % إن دهرا يضم شملي بسلمى % % لزمان قد هم بالإحسان % % PageV01P1091 البحر : بسيط تام 1(@)(@@) % دارت له الكأس حتى زاح باطله % فطرفه نائم في عين يقظان % 2(@)(@@) % ريحانة القلب لو كانت تساعدني % % إذن رضيت بها من كل ريحان % % PageV01P1092 البحر : - 1(@)(@@) % . . . . . . . . . . . . . . . . . . . % غنني للغريض يا ابن قنان % % 2(@)(@@) % . . . . . . . . . . . . . . . . . ووافا % % ني هلال السماء بالبرادان % % PageV01P1093 البحر : خفيف تام 1(@)(@@) % خير إخوانك المشارك في المر % وأين الشريك في المر أينا % % 2(@)(@@) % الذي إن شهدت سرك في الح % % ي وإن غبت كان أذنا وعينا % % 3(@)(@@) % مثل حر الياقوت إن مسه النا % % ر جلاه البلاء فازداد زينا % % 4(@)(@@) % أنت في معشر إذا غبت عنهم % % بدلوا كل ما يزينك شينا % % 5(@)(@@) % وإذا ما رأوك قالوا جميعا % أنت من أكرم الرجال علينا % % 6(@)(@@) % ما أرى للأنام ودا صحيحا % عاد كل الأنام زورا ومينا % % PageV01P1094 البحر : بسيط تام 1(@)(@@) % يا سوأة يكثر الشيطان إن 
urn:cts:arabLit:0167BashsharIbnBurdShacir.Diwan.JK007613-ara1:ms225# ذكرت % % منها التعجب جاءت من سليمانا % % 2(@)(@@) % لا تعجبن لخير زال من يده % % فكوكب النحس يسقي الأرض أحيانا % % PageV01P1095 البحر : منسرح 1(@)(@@) % كأنها روضة منورة % % تجمع طيبا ومنظرا حسنا % % PageV01P1096 البحر : خفيف تام 1(@)(@@) % إنني أشتهي لقاءك والل % % ه فماذا عليك أن تلقاني % % 2(@)(@@) % قد تلف الريح غصنا من البا % % ن إلى مثله فيلتقيان % % PageV01P1097 البحر : كامل تام 1(@)(@@) % إن المليحة من تزين حليها % % لا من غدت بحليها تتزين % % PageV01P1098 البحر : بسيط تام 1(@)(@@) % أمن تجني حبيب راح غضبانا % % أصبحت في سكرات الموت سكرانا % % 2(@)(@@) % لا تعرف النوم من شوق إلى شجن % % كأنما لا ترى الناس أشجانا % % 3(@)(@@) % أود من لم ينلني من مودته % % إلا سلاما يرد القلب حيرانا % % PageV01P1099 البحر : منسرح 1(@)(@@) % بانت بقلبي صفراء رادعة % % صبت علينا من حسنها فتنا % % PageV01P1100 البحر : بسيط تام 1(@)(@@) % حتام قلبي مشغول بذكركم % يهذي وقلبك مربوط بنسياني % % 2(@)(@@) % إني لمنتظر أقصى الزمان بها % % إن كان أدناه لا يصفو لحران % % PageV01P1101 البحر : خفيف تام 1(@)(@@) % أيها الجاهل المباهي بريدا % % ليس بدر السماء منك بدان % PageV01P1102 البحر : وافر تام 1(@)(@@) % ألا يا قوم خلوني وشأني % % فلست بتارك حب الغواني % % 2(@)(@@) % نهوني يا أمامة عن هواكم % % فلم أقبل مقالة من نهاني % % 3(@)(@@) % فإن لم تسعدي فعدي ومني % % خلاعا لا أموت على بيان % % PageV01P1103 البحر : بسيط تام 1(@)(@@) % قوم إذا ما أتى الأضياف منزلهم % % لم ينزلوهم ودلوهم على الخان % % PageV01P1104 البحر : بسيط تام 1(@)(@@) % لا والذي خص منك بالحزن % % وخص للطرف جري الدمع بالوسن % % 2(@)(@@) % ما حن قلبي إلى شيء سواك ولا % % نظرت مذ غبت من عيني إلى حسن % % PageV01P1105 البحر : سريع 1(@)(@@) % أعتقت ما أملك إن لم أكن % % أحب أن ألقاك فالقيني % % PageV01P1106 البحر : بسيط تام 1(@)(@@) % من كل مشتهر في كف مشتهر % % كأن غرته والسيف نجمان % % PageV01P1107 البحر : طويل 1(@)(@@) % وكالسيف إن لا ينته لان متنه % % وحداه إن خاشنته خشنان % % PageV01P1108 البحر : خفيف تام 1(@)(@@) % لقبيح في الناس من غير جرم % % بعد وصل قطيعة الأخوين % % 2(@)(@@) % لا تكن كالحمار إذ طلب القر % % ن لنفع فضيع الأذنين % % PageV01P1109 البحر : وافر تام 1(@)(@@) % تخطتك المقادر والرزايا % % وعشت من الحوادث في أمان % % PageV01P1110 البحر : سريع 1(@)(@@) % وقد تراها إذ لنا ودها % % تدنو وتخشى عقرب العين % % PageV01P1111 البحر : كامل تام 
urn:cts:arabLit:0167BashsharIbnBurdShacir.Diwan.JK007613-ara1:ms226# 1(@)(@@) % الله صورها وصيرها % % لاقتك أو لم تلقها ترها % % 2(@)(@@) % نصبا لعينك لا ترى حسنا % إلا ذكرت به لها شبها % % 3(@)(@@) % إني لأشفق أن أقدمها % % قبلي وأكره أن أؤخرها % % PageV01P1112 البحر : بسيط تام 1(@)(@@) % لا الطير تلقط حبا في سباسبها % % ولا تهب السوافي في أقاصيها % % PageV01P1113 البحر : منسرح 1(@)(@@) % قد نام واش وغاب ذو حسد % فاشرب هنيئا خلا لك الجو % PageV01P1114 البحر : متقارب تام 1(@)(@@) % غدا مالك بملاماته % % علي وما بات من باليه % 2(@)(@@) % تناول خودا هضيم الحشا % % من الحور محظوظة عاليه % 3(@)(@@) % فقلت دع اللوم في حبها % % فقبلك أعييت عذاليه % 4(@)(@@) % وإني لأكتمهم سرها % % غداة تقول لها الخاليه % % 5(@)(@@) % عبيدة ما لك مسلوبة % وكنت مقرطقة حاليه % % 6(@)(@@) % فقالت على رقبة : إنني % % رهنت المرعث خلخاليه % % 7(@)(@@) % بمجلس يوم سأوفي به % % ولو أجلب الناس أحواليه % PageV01P1115 البحر : سريع 1(@)(@@) % هل لك في مالي وعرضي معا % وكل ما يملك جيرانيه % 2(@)(@@) % واذهب إلى أبعد ما ينتوى % % لا ردك الله ولا ماليه % % PageV01P1116 البحر : مجزوء الخفيف 1(@)(@@) % عبد مني وأنعمي % % قد ملكتم قياديه % 2(@)(@@) % شاب رأسي ولم تشب % % وابلائي لدائيه % % PageV01P1117 البحر : وافر تام 1(@)(@@) % وهاجرة نصبت لها جبيني % % يقطع ظهرها ظهر العظايه % PageV01P1118 البحر : وافر تام 1(@)(@@) % وقفت بها القلوص ففاض دمعي % % على خدي وأقصر واعظايه % PageV01P1119 البحر : بسيط تام 1(@)(@@) % أعمى يقود بصيرا لا أبا لكم % قد ضل من كانت العميان تهديه % % PageV01P1120 البحر : هزج 1(@)(@@) % أحب الخاتم الأحمر % % من حب مواليه % % PageV01P1121 البحر : بسيط تام 1(@)(@@) % من حبها أتمنى أن يلاقيني % % من نحو بلدتها ناع فينعاها % % 2(@)(@@) % كيما أقول فراق لا لقاء له % % وتضمر النفس يأسا ثم تسلاها % % 3(@)(@@) % ولو تموت لراعتني وقلت لها % % يا بؤس للموت ليت الدهر أبقاها % % PageV01P1122 البحر : كامل تام 1(@)(@@) % إن الطبيب بطبه ودوائه % % لا يستطيع دفاع مقدور أتى % % 2(@)(@@) % ما للطبيب يموت بالداء الذي % % قد كان يبري مثله فيما مضى % % 3(@)(@@) % إلا لأن الخلق يحكم فيهم % % من لا يرد ولا يجاوز ما قضى % % PageV01P1123 البحر : بسيط تام 1(@)(@@) % كأنها يوم راحت في محاسنها % % فارتج أسفلها واهتز أعلاها % % 2(@)(@@) % حوراء جاءت من الفردوس مقبلة % % فالشمس طلعتها والمسك رياها % % 3(@)(@@) % من اللواتي اكتست قدا وشق لها % % من ثوبه الحسن سربالا فرداها % % 4(@)(@@) % راحت ولم تعطه برا للوعته % % منها 
urn:cts:arabLit:0167BashsharIbnBurdShacir.Diwan.JK007613-ara1:ms227# ولو سألته النفس أعطاها % % PageV01P1124