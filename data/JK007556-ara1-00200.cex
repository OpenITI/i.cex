urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms1#(@)(@)(@@) البحر : كامل تام 1(@)(@@) % حدث حديث فتاة حي مرة % بالجزع بين أذاخر وحراء % 2(@)(@@) % قالت لجارتها عشاء ، إذ رأت % نزه المكان وغيبة الأعداء % 3(@)(@@) % في روضة يممنها مولية % ميثاء رابية بعيد سماء % 4(@)(@@) % في ظل دانية الغصون وريقة % نبتت بأبطح طيب الثرياء % 5(@)(@@) % وكأن ريقتها صبير غمامة % بردت على صحو بعيد ضحاء : % 6(@)(@@) % ليت المغيري العشية أسعفت % دار به ، لتقارب الأهواء % 7(@)(@@) % إذ غاب عنا من نخاف ، وطاوعت % أرض لنا بلذاذة وخلاء % % 8(@)(@@) % قلت : اركبوا نزر التي زعمت لنا % % أن لا نباليها كبير بلاء % 9(@)(@@) % بينا كذلك ، إذ عجاجة موكب ، % رفعوا ذميل العيس بالصحراء % 10(@)(@@) % قالت لجارتها نظري ها ، من أولى % % وتأملي من راكب الأدماء ؟ % PageV01P001 11(@)(@@) % قالت أبو الخطاب أعرف زيه % وركوبه لا شك غير خفاء % 12(@)(@@) % قالت وهل قالت نعم ف ستبشري % % ممن يحب لقيه ، بلقاء % % 13(@)(@@) % قالت : لقد جاءت ، إذا ، أمنيتي ، % في غير تكلفة وغير عناء % % 14(@)(@@) % ما كنت أرجو أن يلم بأرضنا % % إلا تمنيه ، كبير رجاء % % 15(@)(@@) % فإذا المنى قد قربت بلقائه ، % وأجاب في سر لنا وخلاء % % 16(@)(@@) % لما تواقفنا وحييناهما ، % ردت تحيتنا على ستحياء % 17(@)(@@) % قلن : انزلوا فتيمموا لمطيكم % غيبا تغيبه إلى الإماء % % PageV01P002 البحر : خفيف تام 1(@)(@@) % يا قضاة العباد إن عليكم % في تقى ربكم وعدل القضاء % 2(@)(@@) % أن تجيزوا وتشهدوا لنساء ، % وتردوا شهادة لنساء % 3(@)(@@) % فانظروا كل ذات بوص رداح ، % فأجيزوا شهادة العجزاء % % 4(@)(@@) % وارفضوا الرسح في الشهادة رفضا % لا تجيزوا شهادة الرسحاء % 5(@)(@@) % ليت للرسح قرية هن فيها ، % ما دعا الله مسلم بدعاء % % 6(@)(@@) % ليس فيها خلاطهن سواهن ، % بأرض بعيدة وخلاء % 7(@)(@@) % عجل الله قطهن ، وأبقى % % كل خود خريدة قباء % % 8(@)(@@) % تعقد المرط فوق دعص من % % الرمل عريض قد حف بالأنقاء % 9(@)(@@) % ولحى الله كل عفلاء زلاء ، % عبوسا قد آذنت بالبذاء % 10(@)(@@) % صرصر سلفع رضيعة غول ، % لم تزل في شصيبة وشقاء % % PageV01P003 11(@)(@@) % وبنفسي ذوات خلق عميم ، % هن أهل البها وأهل الحياء % 12(@)(@@) % قاطنات دور البلاط كرام % لسن ممن يزور في الظلماء % PageV01P004 البحر : مجزوء الرمل 1(@)(@@) % مر بي سرب ظباء % رائحات من قباء % 2(@)(@@) % زمرا نحو المصلى % % مسرعات في خلاء % 3(@)(@@) % فتعرضت ، وألقيت % جلابيب الحياء % % 4(@)(@@) % وقديما كان عهدي ، % وفتوني بالنساء % PageV01P005 البحر : خفيف تام 1(@)(@@) % صرمت حبلك البغوم ، وصدت 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms2# % عنك ، في غير ريبة ، أسماء % 2(@)(@@) % و لغواني إذا رأينك كهلا % كان فيهن عن هواك التواء % % 3(@)(@@) % حبذا أنت يا بغوم وأسما % % ء ، وعيص يكننا وخلاء % 4(@)(@@) % ولقد قلت ليلة الجزل لما % % أخضلت ريطتي علي السماء : % 5(@)(@@) % ليت شعري وهل يردن ليت ، % هل لهذا عند الرباب جزاء ؟ % 6(@)(@@) % كل وصل أمسى لدي لأنثى % % غيرها ، وصلها إليها أداء % 7(@)(@@) % كل أنثى وإن دنت لوصال ، % أو نأت ، فهي للرباب فداء % 8(@)(@@) % فعدي نائلا ، وإن لم تنيلي ، % إنما ينفع المحب الرجاء % PageV01P006 البحر : خفيف تام 1(@)(@@) % راح صحبي ، وعاود القلب داء % من حبيب طلابه لي عناء % 2(@)(@@) % حسن الرأي والمواعيد لا يلفى لشي % % ء مما يقول وفاء % % 3(@)(@@) % من تعزى عمن يحب ، فإني % % ليس لي ما حييت عنه عزاء % % PageV01P007 البحر : مجزوء الخفيف 1(@)(@@) % حييا أم يعمرا % % قبل شحط من النوى % % 2(@)(@@) % قلت : لا تعجلوا الرواح % % فقالوا : ألا بلى % % 3(@)(@@) % أجمع الحي رحلة ، % ففؤادي كذي الأسى % % PageV01P008 البحر : كامل تام 1(@)(@@) % ولقد دخلت الحي يخشى أهله ، % بعد الهدوء وبعدما سقط الندى % % 2(@)(@@) % فوجدت فيه حرة قد زينت % بالحلي تحسبه بها جمر الغضا % % 3(@)(@@) % لما دخلت منحت طرفي غيرها % % عمدا مخافة أن يرى ريع الهوى % % 4(@)(@@) % كيما يقول محدث لجليسه : % كذبوا عليها ، والذي سمك العلى ! % 5(@)(@@) % قالت لأتراب نواعم حولها % % بيض الوجوه خرائد مثل الدمى : % 6(@)(@@) % ب لله رب محمد ، حدثنني % % حقا أما تعجبن من هذا الفتى % % 7(@)(@@) % الداخل البيت الشديد حجابه ، % في غير ميعاد ، اما يخشى الردى ؟ % 8(@)(@@) % فأجبتها إن المحب معود % بلقاء من يهوى ، وإن خاف العدى % % 9(@)(@@) % فنعمت بالا إذ دخلت عليهم % وسقطت منها حيث جئت على هوى % % 10(@)(@@) % بيضاء مثل الشمس حين طلوعها % % موسومة بالحسن ، تعجب من رأى % % PageV01P009 البحر : طويل 1(@)(@@) % وكم من قتيل لا يباء به دم ، % ومن غلق رهنا ، إذا ضمه منى % % 2(@)(@@) % ومن مالىء عينيه من شيء غيره ، % إذا راح نحو الجمرة البيض كالدمى % % 3(@)(@@) % يسحبن أذيال المروط بأسواق % خدال ، وأعجاز مآكمها روى % % 4(@)(@@) % أوانس يسلبن الحليم فؤاده % فيا طول ما شوق ويا حسن مجتلى ! % 5(@)(@@) % مع الليل قصرا رميها بأكفها % % ثلاث أسابيع تعد من الحصى % % 6(@)(@@) % فلم أر كالتجمير منظر ناظر ، % ولا كليالي الحج أفلتن ذا هوى % % PageV01P010 البحر 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms3# : طويل 1(@)(@@) % ذكرتك يوم القصر قصر ابن عامر % بخم ، وهاجت عبرة العين تسكب % 2(@)(@@) % فظلت وظلت أينق برحالها % % ضوامر ، يستأنين أيان أركب % 3(@)(@@) % أحدث نفسي والأحاديث جمة ، % وأكبر همي والأحاديث زينب % 4(@)(@@) % إذا طلعت شمس النهار ذكرتها ، % وأحدث ذكراها إذا الشمس تغرب % % 5(@)(@@) % وإن لها ، دون النساء ، لصحبتي % % وحفظي والأشعار ، حين أشبب % 6(@)(@@) % وإن الذي يبغي رضاي بذكرها % % إلي ، وإعجابي بها ، يتحبب % % 7(@)(@@) % إذا خلجت عيني أقول لعلها % % لرؤيتها تهتاج عيني وتضرب % 8(@)(@@) % إذا خدرت رجلي أبوح بذكرها ، % ليذهب عن رجلي الخدور فيذهب % PageV01P011 البحر : وافر تام 1(@)(@@) % ألم تربع على الطلل المريب ، % عفا بين المحصب فالطلوب % 2(@)(@@) % بمكة دارسا درجت عليه ، % خلاف الحي ، ذيل صبا دؤوب % % 3(@)(@@) % فأقفر غير منتضد ونؤي ، % أجد الشوق للقلب الطروب % % 4(@)(@@) % كأن الربع ألبس عبقريا % من الجندي أو بز الجروب % 5(@)(@@) % كأن مقص رامسة عليه % مع الحدثان ، سطر في عسيب % 6(@)(@@) % لنعم إذ تعاوده هيام % به أعيا على الحاوي الطبيب % % 7(@)(@@) % لعمرك ، إنني ، من دين نعم ، % لكالداعي إلى غير المجيب % % 8(@)(@@) % وما نعم ولو علقت نعما % بجازية النوال ، ولا مثيب % 9(@)(@@) % وما تجزي بقرض الود نعم % ولا تعد النوال إلى قريب % 10(@)(@@) % إذا نعم نأت بعدت ، وتعدو % % عواد أن تزار مع الرقيب % % PageV01P012 11(@)(@@) % وإن شطت بها دار تعيا % % عليه أمره ، بال الغريب % % 12(@)(@@) % أسميها لتكتم باسم نعم % ويبدي القلب عن شخص حبيب % 13(@)(@@) % وأكتم ما أسميها وتبدو % % شواكله لذي اللب الأريب % % 14(@)(@@) % فإما تعرضي عنا وتعدي % % بقول مماذق ملق كذوب % 15(@)(@@) % فكم من ناصح في آل نعم % عصيت وذي ملاطفة نسيب % 16(@)(@@) % فهلا تسألي أفناء سعد % وقد تبدو التجارب للبيب % 17(@)(@@) % سبقنا بالمكارم ، واستبحنا % % قرى ما بين مأرب فالدروب % 18(@)(@@) % بكل قياد سلهبة سبوح % وسامي الطرف ذي حضر نجيب % 19(@)(@@) % ونحن فوارس الهيجا إذا ما % % رئيس القوم أجمع للهروب % % 20(@)(@@) % نقيم على الخطوب فلن ترانا % % نشل نخاف عاقبة الخطوب % % PageV01P013 21(@)(@@) % ويمنع سربنا في الحرب شم % مصاليت ، مساعر للحروب % % 22(@)(@@) % ويأمن جارنا فينا وتلقى % % فواضلنا بمحتفظ خصيب % 23(@)(@@) % ونعلم أننا سنبيد يوما ، % كما قد باد من عدد الشعوب % 24(@)(@@) % فنجتنب المقاذع حيث كانت % ونكتسب العلاء مع الكسوب % 25(@)(@@) % ولو سئلت بنا البطحاء ، قالت : % هم أهل الفواضل والسيوب % 26(@)(@@) % ويشرق بطن 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms4# مكة حين نضحي % % به ومناخ واجبة الجنوب % 27(@)(@@) % وأشعث إن دعوت ، أجاب وهنا ، % على طول الكرى وعلى الدؤوب % 28(@)(@@) % وكان وساده أحناء رحل % % على أصلاب ذعلبة هبوب % 29(@)(@@) % أقيم به سواد الليل نصا ، % إذا حب الرقاد على الهيوب % PageV01P014 البحر : كامل تام 1(@)(@@) % لبس الظلام إليك مكتتما % خفرا لحاجة آلف صب % 2(@)(@@) % لمعت بأطراف البنان لنا % % إنا نحاذر أعين الركب % 3(@)(@@) % إرجع وردد طرف تابعنا % % حتى يجدد دارس الحب % 4(@)(@@) % فإذا شخوص كنت أعرفها % % في المسك والأكباش والعصب % % 5(@)(@@) % تمشي الضراء على بهينتها % % تبدو غضاضتها من الإتب % 6(@)(@@) % قالت امامة يوم زورتها ، % قول المؤارب غير ذي عتب : % 7(@)(@@) % هذا الذي لج البعاد به ، % ما كان عن رأي ولا لب % 8(@)(@@) % باع الصديق بود غائبة % بالشام ، في متمنع صعب % 9(@)(@@) % لا تهلكيني في عذابكم ، % فالله يعلم غائب القلب % PageV01P015 البحر : خفيف تام 1(@)(@@) % حن قلبي من بعد ما قد أنابا ، % ودعا الهم شجوه فأجابا % % 2(@)(@@) % فاستثار المنسي من لوعة الح % ب ، وأبدى الهموم والأوصابا % % 3(@)(@@) % ذاك من منزل لسلمى خلاء % لابس من عفائه جلبابا % % 4(@)(@@) % أعقبته ريح الدبور ، فما تنف % % ك منه اخرى تسوق سحابا % % 5(@)(@@) % ظلت فيه ، والركب حولي وقوف ، % طمعا أن يرد ربع جوابا % % 6(@)(@@) % ثانيا من زمام وجناء حرف ، % عاتك ، لونها يخال خضابا % % 7(@)(@@) % ترجع الصوت بالبغام إلى جو % ف تناغي به الشعاب الرغابا % % 8(@)(@@) % جدها الفالج الأشم أبو البخ % % ت وخالاتها انتخبن عرابا % % PageV01P016 البحر : خفيف تام 1(@)(@@) % ذكر القلب ذكرة أم زيد % والمطايا بالسهب سهب الركاب % 2(@)(@@) % فاستجن الفؤاد شوقا وهاج الش % وق حزنا لقلبك المطراب % 3(@)(@@) % وبذي الأثل من دوين تبوك % أقتنا ، وليلة الأخراب % 4(@)(@@) % وبعمان طاف منها خيال ، % قلت أهلا بطيفها المنتاب % 5(@)(@@) % هجرته وقربته بوعد ، % وتجنى لهجرتي واجتنابي % % 6(@)(@@) % فلقد أخرج الأوانس كالح % و ، بعيد الكرى أما القباب % % 7(@)(@@) % ثم ألهو بنسوة خفرات % بدن الخلق ، ردح ، أتراب % % 8(@)(@@) % بت في نعمة وباتت وسادي % % ثني كف حديثة بخضاب % % 9(@)(@@) % ثم قمنا لما تجلى لنا الصب % ح ، نعفي آثارنا بالتراب % % PageV01P017 البحر : مجزوء الكامل 1(@)(@@) % حي الرباب ، وتربها % % أسماء ، قبل ذهابها % % 2(@)(@@) % إرجع إليها بالذي % % قالت برجع جوابها % % 3(@)(@@) % عرضت علينا خطة % مشروقة برضابها % % 4(@)(@@) % وتدللت عند العتا % % ب فمرحبا بعتابها % % 5(@)(@@) % تبدي 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms5# مواعد جمة ، % وتضن عند ثوابها % % 6(@)(@@) % ما نلتقي إلا إذا % % نزلت منى بقبابها % % 7(@)(@@) % في النفر أو في ليلة التح % صيب عند حصابها % % 8(@)(@@) % أزجر فؤادك إن نأت % وتعز عن تطلابها % % 9(@)(@@) % واشعر فؤادك سلوة % عنها وعن أترابها % % 10(@)(@@) % وغريرة رؤد الشبا % % ب النسك من أقرابها % % PageV01P018 11(@)(@@) % حدثتها فصدقتها % % وكذبتها بكذابها % % 12(@)(@@) % وبعثت كاتمة الحدي % % ث رفيقة بخطابها % % 13(@)(@@) % وحشية إنسية % خراجة من بابها % % 14(@)(@@) % فرقت ، فسهلت المعا % % رض من سبيل نقابها % % PageV01P019 البحر : مجزوء الخفيف 1(@)(@@) % منع النوم ذكره % من حبيب مجانب % 2(@)(@@) % بعدما قيل قد صحا % % عن طلاب الحبائب % % 3(@)(@@) % وبدا يوم أعرضت % صفح خد وحاجب % 4(@)(@@) % صادت القلب إذ رمت % ذات يوم المناصب % % 5(@)(@@) % يوم قالت لنسوة % من لؤي بن غالب % 6(@)(@@) % وآنسات عقائل % كالظباء الربائب : % 7(@)(@@) % قمن عنه يقل بحا % % جته أو يعاتب % % 8(@)(@@) % فتولى نواعم % مثقلات الحقائب % % 9(@)(@@) % فتأطرن ساعة ، % في مناخ الركائب % % 10(@)(@@) % من عشاء حتى إذا % % غاب تالي الكواكب % PageV01P020 11(@)(@@) % قام يلحى ويستحث % ث على المكث صاحبي % % 12(@)(@@) % قال : أصبحت فانقلب % منجدا غير خائب % 13(@)(@@) % و نقضى الليل كله % تلك إحدى المصائب % % PageV01P021 البحر : رمل تام 1(@)(@@) % طال ليلي وتعناني الطرب % واعتراني طول هم ونصب % 2(@)(@@) % أرسلت أسماء في معتبة ، % عتبتها وهي أهوى من عتب % 3(@)(@@) % فأجابت رقبتي ، فابتسمت % عن شتيت اللون صاف كالثغب % 4(@)(@@) % أن أتى منها رسول موهنا ، % وجد الحي نياما فانقلب % % 5(@)(@@) % ضرب الباب فلم يشعر به % % أحد يفتح عنه إذ ضرب % 6(@)(@@) % فأتاها بحديث غاظها % % شبه القول عليها وكذب % 7(@)(@@) % قال : أيقاظ ، ولكن حاجة % عرضت ، تكتم عنا ، فاحتجب % % 8(@)(@@) % ولعمدا ردني ، فاجتهدت % بيمين حلفة عند الغضب % 9(@)(@@) % أشهد الرحمن لا يجمعنا % % سقف بيت رجبا حتى رجب % 10(@)(@@) % قلت : حلا ، فاقبلي معذرتي ، % ما كذا يجزي محب من أحب % % PageV01P022 11(@)(@@) % إن كفي لك رهن بالرضا ، % فاقبلي يا هند ، قالت : قد وجب % % 12(@)(@@) % وأتتها طبة محتالة ، % تمزج الجد مرارا باللعب % % 13(@)(@@) % ترفع الصوت إذا لانت لها ، % وتراخي عند سورات الغضب % 14(@)(@@) % وهي ، إذ ذاك ، عليها مئزر % ولها بيت جوار من لعب % % 15(@)(@@) % لم تزل تصرفها عن رأيها ، % وتأتاها برفق وأدب % PageV01P023 البحر : كامل تام 1(@)(@@) % أنى تذكر زينب القلب ، % وطلاب وصل غريرة شغب % 2(@)(@@) % ما روضة جاد الربيع لها % % مولية ، ما حولها جدب % % 3(@)(@@) % بألذ 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms6# منها ، إذ تقول لنا % % سرا أسلم ذاك أم حرب % 4(@)(@@) % لا الدار جامعة ولو جمعت % ما زال يعرض دونها خطب % 5(@)(@@) % أهجرتنا ؟ ثم اعتللت لنا ، % ولقد نرى أن ما لنا ذنب % % PageV01P024 البحر : خفيف تام 1(@)(@@) % طال ليلي و عتادني أطرابي % % وتذكرت باطلي في شبابي % % 2(@)(@@) % وتذكرت من رقية ذكرا % قد مضى دارسا على الأحقاب % % 3(@)(@@) % إن وجدي بقربكم أم عمر و % % مثل وجد الصدي ببرد الشراب % % 4(@)(@@) % سلم الله ألف ضعف عليكم ، % مثل ما قلتم لنا في الكتاب % % 5(@)(@@) % عدد الترب والحجارة والنق % ب منع الأرض سهلها والظراب % PageV01P025 البحر : هزج 1(@)(@@) % لمن نار ، قبيل الصب % % ح عند البيت ما تخبو % % 2(@)(@@) % إذا ما أوقدت ، يلقى % % عليها المندل الرطب % PageV01P026 البحر : مجزوء الرمل 1(@)(@@) % لج قلبي في التصابي % % و زدهى عني شبابي % % 2(@)(@@) % ودعاني لهوى هن % فؤاد غير ناب % % 3(@)(@@) % قلت لما فاضت العي % % نان دمعا ذا نسكاب % 4(@)(@@) % إن جفتني اليوم هند % بعد ود و قتراب % 5(@)(@@) % فسبيل الناس طرا % لفناء وذهاب % % PageV01P027 البحر : مجزوء الوافر 1(@)(@@) % أرقت فلم أنم طربا ، % وبت مسهدا نصبا % % 2(@)(@@) % لطيف أحب خلق الله % ه إنسانا وإن غضبا % % 3(@)(@@) % إلى نفسي وأوجههم % وإن أمسى قد احتجبا % % 4(@)(@@) % وصرم حبلنا ظلما ، % لبلغة كاشح كذبا % % 5(@)(@@) % فلم أردد مقالتها ، % ولم أك عاتبا عتبا % % 6(@)(@@) % ولكن صرمت حبلي ، % فأمسى الحبل منقضبا % % PageV01P028 البحر : كامل تام 1(@)(@@) % راع الفؤاد تفرق الأحباب ، % يوم الرحيل فهاج لي أطرابي % % 2(@)(@@) % فظلت مكتئبا أكفكف عبرة % سحا تفيض كواشل الأسراب % 3(@)(@@) % لما تنادوا للرحيل ، وقربوا % % بزل الجمال لطية وذهاب % 4(@)(@@) % كاد الأسى يقضي عليك صبابة ، % والوجه منك لبين إلفك كاب % PageV01P029 البحر : طويل 1(@)(@@) % يقولون : إني لست أصدقك الهوى % % وإني لا أرعاك حين أغيب % 2(@)(@@) % فما بال طرفي عف عما تساقطت % له أعين من معشر وقلوب % 3(@)(@@) % عشية لا يستنكر القوم أن يروا % % سفاه حجى ممن يقال لبيب % 4(@)(@@) % تروح يرجو أن تحط ذنوبه ، % فآب وقد زادت عليه ذنوب % % 5(@)(@@) % وما النسك أسلاني ، ولكن ، للهوى % % على العين مني والفؤاد رقيب % PageV01P030 البحر : خفيف تام 1(@)(@@) % من لعين تذري من الدمع غربا ، % معمل جفنها اختلاجا وضربا % % 2(@)(@@) % معمل جفنها لذكرة إلف % زاده الشوق والصبابة كربا % % 3(@)(@@) % لو شرحت الغداة ، يا هند ، صدري 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms7# % % لم تجد لي يداك ، يا هند ، قلبا % % 4(@)(@@) % ف عذريني إن كنت صاحب عذر % واغفري لي إن كنت أذنبت ذنبا % % 5(@)(@@) % لو تحرجت أو تجرمت مني % % ما تباعدت كلما ازددت قربا % % 6(@)(@@) % فصلي مغرما بحبك ، قد كا % % ن ، على ما أوليته ، بك صبا % % PageV01P031 البحر : مجزوء الخفيف 1(@)(@@) % ذكر القلب ذكرة % من نساء غرائب % 2(@)(@@) % خدل السوق رجح % ناعمات الحقائب % 3(@)(@@) % رب لهو لهوته % % بجوار ربائب % 4(@)(@@) % ليس في ذاك محرم % وإله المغارب % 5(@)(@@) % غير أنا نشفي الصدو % % ر بذرو التعاتب % 6(@)(@@) % قلت ، لما لقيتها : % مرحبا بالمجانب ! % 7(@)(@@) % أنعم الله بالحبي % % ب القريب ، المعاتب % 8(@)(@@) % أنت أشهى إلي من % صرب مزن السحائب % 9(@)(@@) % إنما أنت ظبية ، % من إكام عشائب % % 10(@)(@@) % أو هلال بدا لنا % % وسط زهر الكواكب % PageV01P032 11(@)(@@) % ليت لي من طلابكم % أنني لم أطالب % % 12(@)(@@) % خلتي ، لو بكم كما % % بي ، إذا لم نراقب % % 13(@)(@@) % في هوانا من غشكم ، % بحديث الكواذب % % PageV01P033 البحر : طويل 1(@)(@@) % خذي حدثينا يا قريب التي بها % % أهيم فما تجزي وما تتحوب % 2(@)(@@) % أشوق أن تنأى بنائلة النوى % % وهل ينفعني قربها لو تقرب ؟ % 3(@)(@@) % فإن تتقرب يسكن القلب قربها % % كما النأي منها محدث الشوق منصب % % 4(@)(@@) % فهل تجزيني أم بشر بموقفي % % على النخل يوم البين والعين تسكب % 5(@)(@@) % وإني لها مسلم مسالم سلمها ، % عدو لمن عادت بها الدهر معجب % % 6(@)(@@) % أبيني بنة التيمي فيم تبلته % عشية لف الهاجمين المحصب % % 7(@)(@@) % خذي العقل ، أو مني ، ولا تمثلي به ، % وفي العقل دون القتل للوتر مطلب % PageV01P034 البحر : بسيط تام 1(@)(@@) % مبيتنا جانب البطحاء من شرف ، % لحافنا دون وقع القطر جلباب % 2(@)(@@) % مبطن بكساء القز ، ليس لنا % % إلا الوليدة والنعلين أصحاب % 3(@)(@@) % ثم المطية بالبطحاء يضربها % % واهي العرى من نجاء الدلو سكاب % PageV01P035 البحر : طويل 1(@)(@@) % خليلي ، عوجا حييا اليوم زينبا % % ولا تتركاني صاحبي وتذهبا % % 2(@)(@@) % إذا ما قضينا ذات نفس مهمة % إليها وقرت بالهوى العين فاركبا % % 3(@)(@@) % أقول لواش سالني ، وهو شامت ، % سعى بيننا بالصرم حينا ، وأجلبا % % 4(@)(@@) % سؤال امرىء يبدي لنا النصح ظاهرا ، % يجن خلال النصح غشا مغيبا % % 5(@)(@@) % على العهد سلمى كالبريء وقد بدا % % لنا ، لا هداه الله ، ما كان سببا % % 6(@)(@@) % نعاني لديها بعدما خلت أنه % له الويل ! عن نعتي لديها 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms8# قد اضربا % % 7(@)(@@) % فإن تك سلمى قد جفتني وطاوعت % بعاقبة بي ، من طغى وتكذبا % % 8(@)(@@) % فقد باعدت نفسا عليها شفيقة ، % وقلبا عصى فيها المحب المقربا % % 9(@)(@@) % ولست ، وإن سلمى تولت بودها ، % وأصبح باقي الود منها تقضبا % % 10(@)(@@) % بمثن سوى عرف عليها فمشمت % عداة بها حولي شهودا وغيبا % % PageV01P036 11(@)(@@) % سوى انني لابد إن قال قائل ، % وذو اللب قوال إذا ما تعتبا % % 12(@)(@@) % فلا مرحبا بالشامتين بهجرنا ، % ولا زمن أضحى بنا قد تقلبا % % 13(@)(@@) % وما زال بي ما ضمنتني من الجوى ، % ومن سقم أعيا على من تطببا % % 14(@)(@@) % وكثرة دمع العين ، حتى لو انني % % يراني عدو شامت لتحوبا % % PageV01P037 البحر : كامل تام 1(@)(@@) % ما بال قلبك عاده أطرابه ، % ولدمع عينك مخضلا تسكابه % 2(@)(@@) % ذكرى تذكرها : الرباب ، وهمه ، % حتى يغيب في التراب ، ربابه % 3(@)(@@) % قالت لنائلة : اذهبي قولي له ، % إن كان أجمع رحلة أصحابه ، % PageV01P038 البحر : خفيف تام 1(@)(@@) % أصبح القلب قد صحا وانابا ، % هجر اللهو والصبا والربابا % % 2(@)(@@) % كنت أهوى وصالها فتجنت % ذنب غيري فما تمل العتابا % % 3(@)(@@) % فتعزيت عن هواها لرشدي % % حين لاح القذال مني فشابا % % 4(@)(@@) % بعثت للوصال نحوي وقالت : % إن لله دره ، كيف تابا ؟ % 5(@)(@@) % من رسول إليه يعلم حقا ، % أجمع اليوم هجرة و جتنابا ؟ % 6(@)(@@) % إن لم صرفه للذي قد هوينا % % عن هواه فلا أسغت الشرابا % % 7(@)(@@) % بعثت نحو عاشق غير سال % مع ثواب ، فلا عدمت ثوابا % % 8(@)(@@) % بحديث فيه ملام لصب ، % موجع القلب ، عاشق ، فأجابا % % 9(@)(@@) % فأتاها للحين يعدو سريعا ، % وعصى في هوى الرباب الصحابا % % 10(@)(@@) % كنت أعصي النصيح فيك منال % % وجد ، وأنهى الخليل أن يرتابا % % PageV01P039 11(@)(@@) % فابتليت الغداة منه بشيء % سل جسمي ، وعدت شيئا عجابا % % PageV01P040 البحر : خفيف تام 1(@)(@@) % ما على الرسم بالبليين لو بي % ن رجع التسليم أو لو أجابا % % 2(@)(@@) % فإلى قصر ذي العشيرة فالطا % % ئف أمسى من الأنيس يبابا % % 3(@)(@@) % موحشا بعدما أراه أنيسا % من أناس يبنون فيه القبابا % % 4(@)(@@) % أصبح الربع قد تغير منهم ، % وأجالت به الرياح الترابا % % 5(@)(@@) % فتعفى من الرباب ، فأمسى القل % % ب في إثرها عميدا مصابا % % 6(@)(@@) % وبما قد أرى به حي صدق % كاملي العيش نعمة وشبابا % % 7(@)(@@) % وحسانا ، جواريا ، خفرات ، % حافظات عند الهوى الأحسابا % % 8(@)(@@) % لا يكقرن في الحديث ، ولا 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms9# يت % % بعن ، ينعقن بالبهام ، الظرابا % % 9(@)(@@) % طيبات الأردان والنشر عينا % كمها الرمل ، بدنا ، أترابا % % 10(@)(@@) % إذ فؤادي يهوى الرباب ويأبى ، الده % % ر حتى الممات ، ينسى الربابا % % PageV01P041 11(@)(@@) % ضربت دوني الحجاب ، وقالت % في خفاء ، فما ععيت جوابا % % 12(@)(@@) % قد تنكرت للصديق ، وأظهر % % ت لنا اليوم هجرة و جتنابا % % 13(@)(@@) % قلت : لا بل عداك واش فأصبح % % ت نوارا ما تقبلين عتابا % % PageV01P042 البحر : طويل 1(@)(@@) % وآخر عهدي بالرباب مقالها : % ألست ترى من حولنا فترقبا % % 2(@)(@@) % من الضوء والسمار فيهم مكذب % جريء علينا أن يقول فيكذبا % % 3(@)(@@) % فقلت لها : في الله والليل ساتر ، % فلا تشعبي إن تسألي العرف مشعبا % % 4(@)(@@) % فصدت وقالت : بل تريد فضيحتي ، % فأحبب إلى قلبي بها متغضبا ! % 5(@)(@@) % وباتت تفاتيني لعوب ، كأنها % % مهاة تراعي بالصرائم ربربا % % 6(@)(@@) % فلما تقضى الليل ، إلا أقله ، % وأعنق تالي نجمه فتصوبا % % 7(@)(@@) % وقالت تكفت : حان من عين كاشح % هبوب ، وأخشى الصبح أن يتصوبا % % 8(@)(@@) % فجئت مجودا بالكرى بات سرجه % وسادا له ، ينحاش أن يتقلبا % % 9(@)(@@) % فقلت له أسرج نوائل فقد بدا % % تباشير معروف من الصبح أشهبا % % 10(@)(@@) % فأصبحت من دار الرباب ببلدة % بعيد ، ولو أحببت أن أتقربا % % PageV01P043 البحر : بسيط تام 1(@)(@@) % لم يقض ذو الشجو ممن شفه أربا ، % وقد تمادى به زيغ الهوى حقبا % % 2(@)(@@) % في إثر غانية لم تمس طيتها % % إلا المنى أمما منا ولا صقبا % % 3(@)(@@) % إذا أقول صحا عنها يعاوده % ردع يهيج عليه الشوق والطربا % % 4(@)(@@) % والدمع للشوق متباع فما ذكرت % إلا ترقرق ماء العين ف نسكبا % % 5(@)(@@) % لم يسله النأي عنها حين باعدها % % ولم ينل بالهوى منها الذي طلبا % % 6(@)(@@) % فهو كشبه المعنى لا يموت ولا % % يحيا ، وقد جشمته بالهوى تعبا % % 7(@)(@@) % مرنح العقل قد مل الحياة ومن % يعلق هوى مثلها يستوجب العطبا % % 8(@)(@@) % سيفانة أوتيت في حسن صورتها % % عقلا وخلقا نبيلا كاملا عجبا % % PageV01P044 البحر : كامل تام 1(@)(@@) % خطرت لذات الخال ذكرى بعدما % % سلك المطي بنا على الأنصاب % 2(@)(@@) % أنصاب عمرة والمطي كأنها % % قطع القطا صدرت عن الأحباب % 3(@)(@@) % فانهل دمعي في الرداء صبابة ، % فسترته ب لبرد دون صحابي % % 4(@)(@@) % فرأى سوابق عبرة مهراقة % عمرو فقال : بكى أبو الخطاب % % 5(@)(@@) % فمريت نظرته وقلت : أصابني % % رمد ، فهاج العين بالتسكاب % 6(@)(@@) % لم تجز 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms10# أم الصلت يوم فراقنا % % بالخيف ، موقف صحبتي وركابي % % 7(@)(@@) % وعرفت أن ستكون دارا غربة % منها إذا جاوزت أهل حصابي % % 8(@)(@@) % وتبوأت من بطن مكة مسكنا ، % غرد الحمام ، مشرف الأبواب % % 9(@)(@@) % ما أنس لا أنس غداة لقيتها % % بمنى تريد تحيتي وعتابي % % 10(@)(@@) % وتلددي شهرا أريد لقاءها ، % حذر العدو بساحة الأحباب % PageV01P045 11(@)(@@) % تلك التي قالت لجارات لها % % حور العيون كواعب أتراب : % 12(@)(@@) % هذا المغيري الذي كنا به % نهذي ورب البيت يا أترابي % % 13(@)(@@) % قالت لذاك لها فتاة عندها ، % تمشي بلا إتب ولا جلباب % 14(@)(@@) % قد كنت أحسب أنها في غفلة % عما يسر به ذوو الألباب % 15(@)(@@) % هذا المقام فديتكن مشهر % ف حذرن قول الكاشح المرتاب % 16(@)(@@) % فعجبن من ذاكم وقلن لها : فتحي % % لا شب قرنك مفتحا من باب % 17(@)(@@) % قالت لهن : الليل أخفى للذي % % تهوين من ذا الزائر المنتاب % % PageV01P046 البحر : خفيف تام 1(@)(@@) % شاق قلبي تذكر الأحباب ، % واعترتني نوائب الأطراب % 2(@)(@@) % يا خليلي ف علما أن قلبي % % مستهام بربة المحراب % 3(@)(@@) % علق القلب من قريش ثقالا % ذات دل نقية الأثواب % 4(@)(@@) % ربة للنساء في بيت ملك % جدها حل ذروة الأحساب % % 5(@)(@@) % شف عنها مرقق جندي ، % فهي كالشمس من خلال السحاب % % 6(@)(@@) % فتراءت حتى إذا جن قلبي % % سترتها ولائد بالثياب % 7(@)(@@) % قلت : لما ضربن بالستر دوني : % ليس هذا لعاشق بثواب % % 8(@)(@@) % فأجابت من القطين فتاة ، % ذات دل رقيقة بعتاب % 9(@)(@@) % أرسلي نحوه الوليدة تسعى % % قد فعلنا رضا أبي الخطاب % 10(@)(@@) % لا تطع في قطيعة بنة بشر % ماجد الخيم طاهر الأثواب % % PageV01P047 11(@)(@@) % فاتقي ذا الجلال يا أم عمرو ، % واحكمي في أسيركم بالصواب % % 12(@)(@@) % إفعلي بالأسير إحدى ثلاث % فافهميهن ، ثم ردي جوابي : % 13(@)(@@) % أقتليه قتلا سريحا مريحا ، % لا تكوني عليه سوط عذاب % 14(@)(@@) % أو أقيدي ، فإنما النفس بالنف % % س قضاء مفصلا في الكتاب % % 15(@)(@@) % أو صليه وصلا يقر عليه ، % إن شر الوصال وصل الكذاب % PageV01P048 البحر : كامل تام 1(@)(@@) % حي المنازل قد تركن خرابا % % بين الجرير وبين ركن كسابا % % 2(@)(@@) % بالثني من ملكان غير رسمها % % مر السحاب المعقبات سحابا % % 3(@)(@@) % وذيول معصفة الرياح فرسمها % % خلق تشبهه العيون كتابا % % 4(@)(@@) % كست الرياح جديدها من تربها % % دققا فأصبحت العراص يبابا % % 5(@)(@@) % ولقد أراها مرة مأهولة ، % حسنا نبات محلها معشابا 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms11# % % 6(@)(@@) % دار التي قالت ، غداة لقيتها ، % عند الجمار فما عييت جوابا % % 7(@)(@@) % هذا الذي باع الصديق بغيره ، % ويريد أن أرضى بذاك ثوابا % % 8(@)(@@) % قلت : اسمعي مني المقال ، فمن يطع % بصديقه المتملق الكذابا % % 9(@)(@@) % وتكن لديه حباله أنشوطة ، % في غير شيء ، يقطع الأسبابا % % 10(@)(@@) % إن كنت حاولت العتاب لتعلمي % % ما عندنا فلقد أطلت عتابا % % PageV01P049 11(@)(@@) % أو كان ذلك للبعاد فإنما % % يكفيك ضربك دوننا الجلبابا % % 12(@)(@@) % وأرى بوجهك شرق نور بين ، % وبوجه غيرك طخية وضبابا % % PageV01P050 البحر : بسيط تام 1(@)(@@) % أمسى صديقك مما قلت قد غضبوا % % بل أدلوا فأهل أن هم عتبوا % % 2(@)(@@) % لا تسمعن كلام الكاشحين ، كما % % لم أستمع بك ما قالوا وما هضبوا % % 3(@)(@@) % نثوا أحاديث لم أسمع تحاورها ، % وزاد فيها رجال غيظنا قربوا % % 4(@)(@@) % إن تعدنا رقبة إذ نأت غيركم ، % فأنت أوجه من ينأى ويجتنب % % 5(@)(@@) % للناس فضلك في حسن الصفاء وفي % % صدق الحديث ، وشر الخلة الكذب % % 6(@)(@@) % وأنت همي في أهلي ، وفي سفري ، % وفي الجلوس وفي الركبان إن ركبوا % % 7(@)(@@) % وأنت قرة عيني إن نوى نزحت % ومنيتي وإليك لشوق والطرب % PageV01P051 البحر : طويل 1(@)(@@) % ارقت ولم يمس الذي أشتهي قربا ، % وحملت من أسماء إذ نزحت نصبا % % 2(@)(@@) % لعمرك ما جاوزت غمدان طائعا % وقصر شعوب أن أكون بها صبا % % 3(@)(@@) % ولكن حمى أضرعتني ثلاثة % مجرمة ، ثم ستمرت بنا غبا % % PageV01P052 البحر : كامل تام 1(@)(@@) % إني وأول ما كلفت بحبها % % عجب وما بالدهر من متعجب % 2(@)(@@) % نعت النساء فقلت لست بمبصر % شبها لها أبدا ولا بمقرب % 3(@)(@@) % ولقد تركن حزازة في قلبه % منها بحق ، أو حديث المهرب % 4(@)(@@) % فمكثن حينا ثم قلن : توجهت % للحج موعدها لقاء الأخشب % 5(@)(@@) % أقبلت أنظر ما زعمن وقلن لي % % و لقلب بين مصدق ومكذب % % 6(@)(@@) % فلقيتها تمشي تهادى موهنا % ترمي الجمار عشية في موكب % % 7(@)(@@) % غراء يعشي الناظرين بياضها % % حوراء في غلواء عيش معجب % 8(@)(@@) % فتأملت عيناك فيك وإنما % % زور المنية لابن آدم يصحب % 9(@)(@@) % إن التي من أرضها وسمائها % % جلبت لحينك ليتها لم تجلب % PageV01P053 البحر : طويل 1(@)(@@) % لعمري لقد بينت في وجه تكتم % غداة تلاقينا ، التجهم والغضب % 2(@)(@@) % بلا يد سوء كنت أزللت عندها % % ولا بحديث نث عني ، فيا عجب % 3(@)(@@) % وإني لمصروم إذا قال كاشح 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms12# % فوافق يوما بعض ما قال أو كذب % 4(@)(@@) % فملآن يثن الصبر نفسي أو تمت % إذا انبت حبل من حبالك فانقضب % % 5(@)(@@) % فما إن لنا في أهل مكة حاجة % سواك وإن قضيت من وصلنا الأرب % % 6(@)(@@) % وقولي لنسوان لحينك في الهوى % % إذا عقل إحداهن من وصلنا عزب % 7(@)(@@) % أجئنا الذي لم يأته الناس قبلنا ؟ % فقبلي من النسوان والناس من أحب % PageV01P054 البحر : خفيف تام 1(@)(@@) % يا خليلي قربا لي ركابي % % و سترا ذاكما غدا عن صحابي % % 2(@)(@@) % و قرءا مني السلام على الرس % ي من منى بجنب الحصاب % 3(@)(@@) % واعلما أنني أصبت بداء % داخل في الضلوع دون الحجاب % 4(@)(@@) % ثم صدت بوجهها عمد عين % زينب ، للقضاء ، أم الحباب % % 5(@)(@@) % فرأى ذاك صاحباي فقالا % % منطقا خاب لم يكن من جوابي : % 6(@)(@@) % إن مني الفؤاد ذا اللب فيما % % قد يرى ظاهرا لعين مصاب % % 7(@)(@@) % فرددت الذي من الجهل قالا % % بمقال قد قلته بصواب : % 8(@)(@@) % إن تكونا كتمتما اليوم دائي % % فذراني ، فقد كفاني ما بي % % 9(@)(@@) % غير أني وددت أن عذابا % صب يوما عليكما من عذابي % % 10(@)(@@) % فتذوقان بعض ما ذقت منها ، % أو تدابان حقبة مثل دابي % % PageV01P055 11(@)(@@) % لا تنالان ذلك الوصل منها % % أو تنالا السماء بالأسباب % % PageV01P056 البحر : كامل تام 1(@)(@@) % إن الحبيب ألم بالركب ، % ليلا فبات مجانبا صحبي % % 2(@)(@@) % ففزعت من نومي على وسن % وذكرت ما قد هاج من نصبي % % 3(@)(@@) % زارت رميلة زائرا في صحبة % أحبب بها زورا على عتب % 4(@)(@@) % زورا لعمري شف قلبي ذكره ، % سكن الغدير ، فليس من شعبي % % 5(@)(@@) % وأنا مرؤ بقرار مكة مسكني % % ولها هواي فقد سبت قلبي % % 6(@)(@@) % ولقد حفظت وما نسيت مقالها ، % عند الرحيل : هجرتنا حبي % % 7(@)(@@) % وبدت لنا عند الفراق بكربة % ولنا بذلك أفضل الكرب % 8(@)(@@) % قالت رميلة حين جئت مودعا % ظلما بلا ترة ولا ذنب : % 9(@)(@@) % هذا الذي ولى فأجمع رحلة ، % وابتاع منا البعد بالقرب % % 10(@)(@@) % فأججبتها والدمع مني مسبل % سكب ، ودمعي دائم السكب : % PageV01P057 11(@)(@@) % إن قد سلوت عن النساء سواكم ، % وهجرتهن ، فحبكم طبي % % PageV01P058 البحر : مجزوء الرمل 1(@)(@@) % ليت شعري هل أذوق % قن رضابا من حبيب % 2(@)(@@) % طيب الريقة والنك % هة كالراح القطيب % % 3(@)(@@) % واضح اللبة والسن % كالظبي الربيب % % 4(@)(@@) % مخطف الكشحين ، عاري % % لب ذي 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms13# دل عجيب % % 5(@)(@@) % مشبع الخلخال ، والقل % % بين ، صياد القلوب % 6(@)(@@) % قد سبتني بشتيت الن % بت في سقط كثيب % % 7(@)(@@) % حبذا ذاك غزالا % قد شفى قرح ندوبي % % 8(@)(@@) % وجزاني بهوائي % % وثنائي في المغيب % 9(@)(@@) % ولقد أشفقت من حب % حبكم أقضي نحيبي % % 10(@)(@@) % إن قلبي ف علميه % كل يوم في وجيب % % PageV01P059 11(@)(@@) % كيف صبري عن فتاة % أحسن الناس لعوب % % 12(@)(@@) % صلتة الخدين ، خود ، % خلطت حسنا بطيب % PageV01P060 البحر : منسرح 1(@)(@@) % أراك يا هند ، في مباعدتي ، % معتلة لي لتقطعي سببي % % 2(@)(@@) % هند أطاعت بي الوشاة فقد % أمست تراني كعرة الجرب % % 3(@)(@@) % يا هند لا تبخلي بنائلكم % عنا ، فلم أقض منكم أربي % % 4(@)(@@) % يا بنت خير الملوك مأثرة ، % ليني لذي حاجة ومرتقب % 5(@)(@@) % و قتصدي في الملام و تركي % % بعض التجني علي والغضب % 6(@)(@@) % وأجلينا لوعدكم أجلا % ثم اصدقينا ، لا خير في الكذب % % 7(@)(@@) % قالت فميعادك التقمر في % % أول عشر خلون من رجب % PageV01P061 البحر : طويل 1(@)(@@) % لقد أرسلت نعم إلينا أن ئتنا ، % فأحبب بها من مرسل متغضب % 2(@)(@@) % فأرسلت أن لا أستطيع ، فأرسلت % تؤكد أيمان الحبيب المؤنب % % 3(@)(@@) % فقلت لجناد : خذ السيف ، واشتمل % % عليه بحزم ، وارقب الشمس تغرب % % 4(@)(@@) % وأسرج لي الدهماء واذهب بممطري ، % ولا تعلمن حيا من الناس مذهبي % % 5(@)(@@) % وموعدك البطحاء من بطن ياجج ، % أو الشعب ذو الممروخ من بطن مغرب % 6(@)(@@) % فلما لتقينا سلمت ، وتبسمت ، % وقالت كقول المعرض المتجنب : % 7(@)(@@) % أمن أجل واش كاشح بنميمة % مشى بيننا ، صدقته ، لم تكذب ؟ % 8(@)(@@) % قطعت حبال الوصل منا ، ومن يطع % بذي وده قول المحرش يعتب % % 9(@)(@@) % فبات وسادي ثني كف مخضب ، % معاود عذب لم يكدر بمشرب % 10(@)(@@) % إذا ملت ، مالت كالكثيب رخيمة ، % منعمة ، حسانة المتجلبب % PageV01P062 البحر : بسيط تام 1(@)(@@) % قالت ثريا لأتراب لها قطف : % قمن نحي أبا الخطاب من كثب % 2(@)(@@) % فطرن حبا لما قالت ، وشايعها % % مثل التماثيل قد موهن بالذهب % 3(@)(@@) % يرفلن في مطرفات السوس آونة ، % وفي العتيق من الديباج والقصب % 4(@)(@@) % ترى عليهن حلي الدر متسقا ، % مع الزبرجد والياقوت ، كالشهب % 5(@)(@@) % قالت لهن فتاة ، كنت أحسبها % % غريرة برجييع القول واللعب % 6(@)(@@) % هذا مقام شنوع لا خفاء به ، % ألا تخفن من الأعداء والرقب % PageV01P063 البحر : خفيف تام 1(@)(@@) % لا تلمني عتيق حسبي الذي بي ، % والتمس لي الدواء 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms14# عند الطبيب % 2(@)(@@) % إن قلبي ما زال من أم عمر و % % ضمنا بعد ليلة التحصيب % 3(@)(@@) % يكتم الناس ما به ، والذ % % تم باد مبين للبيب % 4(@)(@@) % يا ابنة الخير ، والسناء ، وفزع % مجد والمنصب الرفيع أثيبي % % 5(@)(@@) % فإليك انتهت فروع قريش ، % بمساعي العلى وطيب النسيب % % PageV01P064 البحر : منسرح 1(@)(@@) % أمست كراع الغميم موحشة ، % بعد الذي قد خلا من الحقب % 2(@)(@@) % إن تمس وحشا ، فقد شهدت بها % % حورا حسانا في موكب عجب % 3(@)(@@) % من عبد شمس ، وهاشم ، وبني % % زهرة ، أهل الصفات و لحسب % 4(@)(@@) % يرفلن في الريط والمروط ، م % % خز ، يسحبنها على الكثب % % 5(@)(@@) % يا طول ليلي وآب لي طربي % % لما تذكرت منزل الخرب ! % 6(@)(@@) % منزل من راح منه معتمرا % ليلة ست خلون من رجب % 7(@)(@@) % فهي لنا خلة نواصلها ، % من غير ما محرم ولا ريب % 8(@)(@@) % مثل غزال يهز مشيته % أحوى ، عليه قلائد الذهب % % PageV01P065 البحر : خفيف تام 1(@)(@@) % قال لي صاحبي ، ليعلم ما بي : % أتحب القتول أخت الرباب ؟ % 2(@)(@@) % قلت : وجدي بها كوجدك بالماء ، % إذا ما منعتبرد الشراب % 3(@)(@@) % من رسولي إلى الثريا بأني % % ضقت ذرعا بهجرها والكتاب ؟ % 4(@)(@@) % أزهقت أم نوفل إذ دعتها % % مهجتي ما لقاتلي من متاب % 5(@)(@@) % حين قالت لها : أجيبي ، فقالت : % من دعاني ؟ قالت : أبو الخطاب % % 6(@)(@@) % أبرزوها مثل المهاة تهادى ، % بين خمس كواعب أتراب % 7(@)(@@) % فأجابت عند الدعاء كما لبى رجا % % ى رجال يرجون حسن الثواب % % 8(@)(@@) % وهي مكنونة تحير منها ، % في أديم الخدين ، ماء الشباب % 9(@)(@@) % دمية عند راهب ذي اجتهاد ، % صوروها في جانب المحراب % % 10(@)(@@) % وتكنفنها كواعب بيض ، % واضحات الخدود ، والأقراب % % PageV01P066 11(@)(@@) % ثم قالوا : تحبها ؟ قلت : بهرا % عدد النجم والحصى والتراب % 12(@)(@@) % حين شب القتول والجيد منها % % حسن لون يرف كالزرباب % % 13(@)(@@) % أذكرتني من بهجة الشمس ، لما % % طلعت من دجنة وسحاب % 14(@)(@@) % فارجحنت في حسن خلق عميم ، % تتهادى في مشيها كالحباب % % 15(@)(@@) % قلدوها ، من القرنفل والدر ، % ر سخابا ، واها له من سخاب % 16(@)(@@) % غصبتني مجاجة المسك نفسي ، % فسلوها : ماذا أحل اغتصابي ؟ % PageV01P067 البحر : خفيف تام 1(@)(@@) % ايها القائل غير الصواب ، % أمسك النصح وأقلل عتابي % % 2(@)(@@) % واجتنبني ، واعلم بأن سوف تعصى ، % ولخير لك بعض اجتنابي % % 3(@)(@@) % إن تقل نصحا فعن ظهر غش % دائم الغمر بعيد الذهاب % 4(@)(@@) % ليس بي 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms15# عي بما قلت إني % % عالم أفقه رجع الجواب % 5(@)(@@) % إنما قرة عيني هواها % % فدع اللوم وكلني لما بي % % 6(@)(@@) % لا تلمني في الرباب ، وأمست % عدلت للنفس برد الشراب % % 7(@)(@@) % هي ، والله الذي هو ربي ، % صادقا أحلف غير الكذاب % 8(@)(@@) % أكرم الأحياء طرا علينا ، % عند قرب منهم ، و غتراب % 9(@)(@@) % لقيتنا في الطواف وصدت % إذ رأت هجري لها و جتنابي % % 10(@)(@@) % عاتبتني ساعة ، وهي تبكي % % ثم عزت خلتي في الخطاب % % PageV01P068 11(@)(@@) % وكفى بي مدرها لخصوم % لسواها عند جد تناب % PageV01P069 البحر : منسرح 1(@)(@@) % الم طيف ، فهاج لي طربي ، % ليلة بتنا بجانب الكثب % 2(@)(@@) % ألم بي والركاب ساكنة % ليلا ، وهمي بذكرتي وصبي % % 3(@)(@@) % فبت أرعى النجوم مرتفقا % من حبها والمحب في تعب % 4(@)(@@) % طيف لهند سرى فأرقني % % ونحن بين الكراع والخرب % 5(@)(@@) % با هند لا تبخلي بنائلكم % من عاشق ظل منك في نصب % % 6(@)(@@) % يا هند عاصي الوشاة في رجل % يهتز للمجد ، ماجد الحسب % % PageV01P070 البحر : متقارب تام 1(@)(@@) % بنفسي من أشتكي حبه % ومن إن شكا الحب لم يكذب % 2(@)(@@) % ومن إن تسخط أعتبته ، % وإن يرني ساخطا يعتب % 3(@)(@@) % ومن لا أبالي رضا غيره ، % إذا هو سر ولم يغضب % % 4(@)(@@) % ومن لا يطيع بنا أهله % ومن قد عصيت له أقربي % % 5(@)(@@) % ومن لو نهاني ، من حبه % عن الماء ، عطشان ، لم أشرب % % 6(@)(@@) % ومن لا سلاح له يتقى ، % وإن هو نوزل ، لم يغلب % PageV01P071 البحر : كامل تام 1(@)(@@) % ردع الفؤاد تذكر الأطراب ، % وصبا إليك ، ولات حين تصابي % % 2(@)(@@) % أن تبذلي لي نائلا يشفى به % سقم الفؤاد فقد أطلت عذابي % % 3(@)(@@) % وعصيت فيك أقاربي فتقطعت % بيني وبينهم عرى الأسباب % % 4(@)(@@) % وتركتني لا ب لوصال ممتعا % منهم ، ولا أسعفتني بثواب % % 5(@)(@@) % فقعدت كالمهريق فضلة مائه ، % في حر هاجرة ، للمع سراب % 6(@)(@@) % يشفى به منه الصدى ، فأماته % طلب السراب ، ولات حين طلاب ! % 7(@)(@@) % قالت سعيدة ، والدموع ذوارف % منها على الخدين والجلباب : % 8(@)(@@) % ليت المغيري الذي لم أجزه % % فيما اطال تصيدي وطلابي % % 9(@)(@@) % كانت ترد لنا المنى أيامنا ، % إذ لا نلام على هوى وتصابي % % 10(@)(@@) % خبرت ما قالت فبت كأنما % % رمي الحشا بنوافذ النشاب % % PageV01P072 11(@)(@@) % أسعيد ، ما ماء الفرات وطيبه ، % منا على ظمإ وفقد شراب % % 12(@)(@@) % بألذ منك ، وإن نأيت ، وقلما 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms16# % % ترعى النساء أمانة الغياب % PageV01P073 البحر : طويل 1(@)(@@) % أعبدة ، ما ينسى مودتك القلب ، % ولا هو يسليه رخاء ولا كرب % 2(@)(@@) % ولا قول واش كاشح ذي عداوة % ولا بعد دار ، إن نأيت ولا قرب % % 3(@)(@@) % وما ذاك من نعمى لديك أصابها % % ولكن حبا ما يقاربه حب % 4(@)(@@) % فإن تقبلي يا عبد دعوة تائب % تب ، ثم لا يوجدله أبدا ذنب % 5(@)(@@) % أذل لكم يا عبد فيما هويتم % وإني لدى من رامني غيركم صعب % 6(@)(@@) % وأعذل نفسي في الهوى ، فتعقني ، % ويأصرني قلب بكم كلف صب % 7(@)(@@) % وفي الصبر عمن لا يؤاتيك راحة % ولكنه لا صبر عندي ، ولا لب % 8(@)(@@) % وعبدة بيضاء المحاجر طفلة % منعمة ، تصبي الحليم ، ولا تصبو % % 9(@)(@@) % قطوف من الحور الاوانس ، بالضحى ، % متى تمش ، قيس البا من بهرها ترب % 11(@)(@@) % ألا ليت شعري ، فيمكان صدوده ، % ألعق أخرى ، أم علي به عتب ؟ % PageV01P074 البحر : كامل تام 1(@)(@@) % هلا ارعويت ، فترحمي صبا % % صديان لم تدعي له قلبا % % 2(@)(@@) % لا تحسبي حظا خصصت به % % رجلا سلبت فؤاده صبا % % 3(@)(@@) % جشم الزيارة عن مودتكم % فأراد أن لا تحقدي ، ذنبا % % 4(@)(@@) % فلذاك خير من مواصلة % سلما ، وكنت ترينه حربا % % 5(@)(@@) % يا أيها المصفي مودته % من لا يزال مسامتا خطبا % % 6(@)(@@) % لا تجعلن احدا عليك ، إذا % % أحببته وهويته ، ربا % % 7(@)(@@) % وصل الحبيب إذا كلفت به % و طو الزيارة دونه غبا % % 8(@)(@@) % فلذاك خير من مواظبة ، % ليست تزيدك عنده قربا % % 9(@)(@@) % لا بل يملك حين تطلبه % فيقول : هاه ! وطالما لبى % % PageV01P075 البحر : متقارب تام 1(@)(@@) % وما ظبية من ظباء الاراك ، % تقرو دماث الربى عاشبا % % 2(@)(@@) % بأحسن منها غداة الغميم % إذ أبدت الخد والحاجبا % % 3(@)(@@) % غداة تقول على رقبة % لخادمها : إحبسي الراكبا % % 4(@)(@@) % فقالت لها : فيم هذا الكلا % % م ، في وجهها ، عابسا قاطبا ! % 5(@)(@@) % فقالت : كريم أتى زائرا ، % يمر بكم هكذا جانبا % % 6(@)(@@) % غريب أتى ربعنا زائرا ، % فأكره رجعته خائبا % % 7(@)(@@) % لحبك أحببت من لم يكن % صفيا ، لنفسي ، ولا صاحبا % % 8(@)(@@) % وأبذل مالي لمرضاتكم ، % وأعتب من جاءني عاتبا % % 9(@)(@@) % وأرغب في ود من لم أكن % إلى وده قبلكم راغبا % % 10(@)(@@) % ولو سلك الناس في جانب ، % من الأرض ، واعتزلت جانبا % % PageV01P076 11(@)(@@) % لأتبعت طيتها إنني % % أرى دونها العجب العاجبا % % PageV01P077 البحر : مجزوء الرمل 1(@)(@@) % قد نبا 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms17# بالقلب منها % % إذ تواعدنا الكثيبا % % 2(@)(@@) % قولها : أحسن شيء % بك قد لف حبيبا % % 3(@)(@@) % قولها لي وهي تذري % % دمع عينيها غروبا : % 4(@)(@@) % إننا كنا لهذا % % أنصح الناس جيوبا % % 5(@)(@@) % وحبوناه بود ، % لم يكن منا مشوبا % % 6(@)(@@) % فجزانا ، إذ حمدنا % % وده لي ، أن يغيبا % % 7(@)(@@) % وكسانا اليوم عارا % حين بتنا وعيوبا % % 8(@)(@@) % نأيها سقم ، وأشتا % % ق إذا تمسي قريبا % % 9(@)(@@) % ليت هذا الليل شهر % لا نرى فيه غريبا % % 10(@)(@@) % مقمر ، غيب عنا % % من اردنا أن يغيبا % % PageV01P078 11(@)(@@) % ليس إلاي وأيا % % ها ، ولا نخشى رقيبا % % 12(@)(@@) % جلست مجلس صدق % جمعت حسنا وطيبا % % 13(@)(@@) % دمث المقعد والمو % طىء ، ثريانا ، خصيبا % % 14(@)(@@) % افرغت فيه الثريا % % من ذرى الدلو سكوبا % % 15(@)(@@) % مقنعا أنبت زرعا ، % ومع الزرع خضوبا % % PageV01P079 البحر : بسيط تام 1(@)(@@) % يا دار عبدة بالأشطار ف لكثب % ردي السلام فقد هيجت لي طربي ! % 2(@)(@@) % دار لعبدة ، إذ أترابها خرد ، % حور المدامع لا يؤبن بالكذب % 3(@)(@@) % أدعوك ما ضحكت سني وإن خدرت % % رجلي دعوت دعاء العاشق الطرب % % PageV01P080 البحر : كامل تام 1(@)(@@) % طرب الفؤاد وهل له من مطرب ، % أم هل لسالف وده من مطلب ؟ % 2(@)(@@) % وصبا ومال به الهوى و عتاده % لهو الصبا بجنون قلب مسهب % 3(@)(@@) % فيه من النصب المبين زمانه % والحب من يعلق جواه يعطب % % 4(@)(@@) % علق الهوى من قلبه بغريرة % ريا الروادف ذات خلق خرعب % 5(@)(@@) % تجري السواك على أغر مفلج ، % عذب اللثات لذيذ طعم المشرب % % 6(@)(@@) % قالت لجارية لها : قولي له % مني مقالة عاتب لم يعتب % 7(@)(@@) % ولقد علمت لئن عددت ذنوبه % أن سوف يزعم أنه لم يذنب % 8(@)(@@) % ألمخبري : إني أحب مصاقبا % داني المحل ، ونازحا لم يقصب % % 9(@)(@@) % لو كان بي كلفا كما قد قال لم % يجمع بعادي عامدا ، وتجنبي % % 10(@)(@@) % فجعلت أثلجها يمينا برة % ب لله حلفة صادق لم يكذب % PageV01P081 11(@)(@@) % ما زال حبك ، بعد ، ينمي صاعدا % عندي وأرقب فيك ما لم ترقبي % % PageV01P082 البحر : خفيف تام 1(@)(@@) % عاود القلب من سلامة نصب ، % فلعيني من جوى الحب سكب % 2(@)(@@) % ولقد فلت أيها القلب ذو الشوق % الذي لا يحب حبك حب % 3(@)(@@) % إنه قد نأى مزار سليمى ، % وعدا مطلب عن الوصل صعب % 4(@)(@@) % قد أراني في سالف الدهر لو دا % % م وغصن الشباب إذ ذاك 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms18# رطب % 5(@)(@@) % ولها حلة من العيش ، ما في % % ها لمن يبتغي الملاحة عتب % 6(@)(@@) % فعدانا خطب وكل محب % ين سيعدوهما عن الوصل خطب % 7(@)(@@) % وكلانا ولو صددت وصدت % مستهام به من الحب حسب % 8(@)(@@) % لو علمت الهوى عذرت ولكن % إنما يعذر المحب المحب % PageV01P083 البحر : طويل 1(@)(@@) % خرجت غداة النفر أعترض الدمى % % فلم أر أحلى منك في العين والقلب % PageV01P084 البحر : خفيف تام 1(@)(@@) % ألا يا من أحب بكل نفسي % % ومن هو من جميع الناس حسبي % % 2(@)(@@) % ومن يظلم فأغفره جميعا % ومن هو لا يهم بغفر ذنب % PageV01P085 البحر : خفيف تام 1(@)(@@) % أرسلت خلتي إلي بأنا % % قد أتينا ببعض ما قد كتمتا % % 2(@)(@@) % وبهجرانك الرباب ، حديثا ، % سوأة ، يا خليل ، ما قد فعلتا % % 3(@)(@@) % وهجرت الرباب من حب سعدى % % ونسيت الذي لها كنت قلتا % % 4(@)(@@) % ولعمري ليحسنن عزائي % % عنك إذ كنت غيها قد ألفتا % % 5(@)(@@) % وكأني قد كنت أعلم أني % % لست إلا كمن به قد غدرتا % % 6(@)(@@) % غير أن قد غدرتني قبل خبر ، % فوجدناك كاذبا إذ خبرتا % % 7(@)(@@) % أين أيمانك الغليظة ، % ومواثيق كلها قد نقضتا % % 8(@)(@@) % لا تخون الرباب ما دمت حيا ، % يا ابن عمي ، فقد غدرت وخنتا % % 9(@)(@@) % وأتيت الذي أتيت بعمد ، % لم تهبنا لذاك ، ثم ظلمتا % % 10(@)(@@) % إن تجد الوصال منك فإنا % % قبح الله بعدها من خدعتا % % PageV01P086 11(@)(@@) % من كلام تهذه وبحلف % فلعمري فربما قد حلفتا % % 12(@)(@@) % ثم لم توف ، إذ خلفت ، بعهد ، % بئس ذو موضع الامانة أنتا % % PageV01P087 البحر : خفيف تام 1(@)(@@) % عجبا ما عجبت مما لو ابصر % % ت خليلي ما دونه ، لعجبتا % % 2(@)(@@) % لمقال الصفي : فيم التجني ، % ولما قد جفوتني ، وهجرتا ؟ % 3(@)(@@) % في بكاء ، فقلت : ماذا الذي % % أبكاك ؟ قالت فتاتها : ما فعلتا ! % 4(@)(@@) % ولوت رأسها ضرارا وقالت % إذ رأتني : اخترت ذلك أنتا % % 5(@)(@@) % حين آثرت بالمودة غيري ، % وتناسيت وصلنا ومللتا % % 6(@)(@@) % قلت لي قول مازح تستبيني % % بلسان مقول ، إذ حلفتا : % 7(@)(@@) % عاشري ف خبري فمن شؤم جدي % % وشقائي عوشرت ثم خبرتا ! % 8(@)(@@) % فوجدناك إذ خبرنا ملولا % طرفا لم تكن كما كنت قلتا % % 9(@)(@@) % وتجلدت لي لتصرم حبلي ، % بعدما كنت رثه قد وصلتا % % 10(@)(@@) % فاذكر العهد بالمحصب ، والو % % د الذي كان بيننا ، ثم خنتا % % PageV01P088 11(@)(@@) % ولعمري ماذا بأول ما عا % % تني ، يا 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms19# ابن عم ، ثم غدرتا ؟ % 12(@)(@@) % فحرام عليك أن لا تنال الده % هر ، مني غير الذي كنت نلتا ! % 13(@)(@@) % قلت : مهلا عفوا جميلا ! فقالت : % لا وعيشي ، ولو رأيتك متا ! % 14(@)(@@) % وأجازت بها البغال تهادى ، % نحو خبت ، حتى إذا جزن خبتا % % 15(@)(@@) % سكنت مشرف الذرى ، ثم قالت : % لا تزرنا ، ولا نزورك سبتا % % PageV01P089 البحر : خفيف تام 1(@)(@@) % أيها العاتب فيها عصيتا ، % لن تطاع الدهر ، حتى تموتا % % 2(@)(@@) % إن تكن أصبحت فينا مطاعا % فلك العتبى بأن لا رضيتا % % PageV01P090 البحر : مجزوء الرمل 1(@)(@@) % صاد قلبي اليوم ظبي % مقبل من عرفات % 2(@)(@@) % في ظباء تتهادى % % عامدا للجمرات % 3(@)(@@) % وعليه الخز ، والقز ، % ووشي الحبرات % 4(@)(@@) % إنني لست بناس % % ذلك الظبي حياتي % % PageV01P091 البحر : رمل تام 1(@)(@@) % ولقد قالت لأتراب لها ، % كالما يلعبن في حجرتها : % 2(@)(@@) % خذن عني الظل لا يتبعني % % ومضت تسعى إلى قبتها % % 3(@)(@@) % لم تعانق رجلا في مضى % % طفلة غيداء في حلتها % % 4(@)(@@) % لم يصبها نكد فيما مضى % % ظبية تختال في مشيتها % % 5(@)(@@) % لم يطش قط سهم ، ومن % ترمه لا ينج من رميتها % % PageV01P092 البحر : متقارب تام 1(@)(@@) % من البكرات عراقية % تسمى سبيعة ، أطربتها % % 2(@)(@@) % من آل أبي بكرة الأكرمين % خصصت بودي فأصفيتها % % 3(@)(@@) % ومن حبها زرت أهل العراق % وأسخطت أهلي وأرضيتها % % 4(@)(@@) % أموت إذا شحطت دارها % % وأحيا ، إذا أنا لاقيتها % % 5(@)(@@) % فأقسم لو أن ما بي بها ، % وكنت الطبيب لداويتها % % PageV01P093 البحر : خفيف تام 1(@)(@@) % برز البدر في جوار تهادى % % مخطفات الخصور معتجرات % 2(@)(@@) % فتنفست ثم قلت لبكر % عجلت في الحياة لي خيباتي : % 3(@)(@@) % هل سبيل ، إلى التي لا أبالي % % بعدها أن أموت ، قبل وفاتي ؟ % PageV01P094 البحر : خفيف تام 1(@)(@@) % قد أتانا الرسول بالأبيات ، % في كتاب قد خط بالترهات % 2(@)(@@) % حائر الطرف ، إن نظرت ، وما % % طرفك عندي بصادق النظرات % 3(@)(@@) % غر غيري ، فقد عرفت لغيري % % عهدك الخائن ، القليل الثبات % PageV01P095 البحر : خفيف تام 1(@)(@@) % يعجز المطرف العشاري عنها % % والإزار السديس ذو الصنفات % PageV01P096 البحر : سريع 1(@)(@@) % بالله ، يا ظبي بني الحارث ، % هل من وفى بالعهد كالناكث ؟ % 2(@)(@@) % لا تخدعني بالمنى باطلا ، % وأنت بي تلعب كالعابث % 3(@)(@@) % حتى متى أنت لنا هكذا ، % نفسي فداء لك ، يا حارثي ! % 4(@)(@@) % يا منتهى همي ويا منيتي ، % ويا هوى نفسي ، ويا وارثي % % PageV01P097 البحر : وافر تام 1(@)(@@) % نأت 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms20# بصدوف عنك نوى عنوج % وجن بذكرها القلب اللجوج % 2(@)(@@) % غداة غدت حمولهم ، وفيهم % % ضحا شخص إلى قلبي يهيج % % 3(@)(@@) % سكن الغور مربعهن ، حتى % % رأين الأرض قد جعلت تهيج % 4(@)(@@) % وصفن به ، فقلن لنا : بنجد % من الحر ، الذي نلقى ، فروج % % 5(@)(@@) % فعالين الحمول على نواج % علائف لم تلوحها المروج % % 6(@)(@@) % غدون فقلن أعواء مقيل % لكم فانحوا لذاك ولا تعوجوا % % 7(@)(@@) % ورحن ، فبتن فوق البئر ، حتى % % بدا للناظر الصبح البليج % % 8(@)(@@) % كأنهم على البوباة نخل % أمر لها بذي صعب خليج % 9(@)(@@) % فما يدري المخبر : أي جزع % من الأجزاع يممت الحدوج % PageV01P098 البحر : بسيط تام 1(@)(@@) % يا ربة البغلة الشهباء ، هل لكم % أن ترحمي عمرا ، لا ترهقي حرجا % % 2(@)(@@) % قالت : بدائك مت أو عش تعالجه ، % فما نرى لك ، فيما عندنا ، فرجا % % 3(@)(@@) % قد كنت حملتني غيظا أعالجه ، % فإن تقدني فقد عنيتني حججا % % 4(@)(@@) % حتى لو سطيع مما قد فعلت بنا % % أكلت لحمك من غيظي ، وما نضجا % % 5(@)(@@) % فقلت : لا والذي حج الحجيج له ، % ما مج حبك من قلبي ولا نهجا % % 6(@)(@@) % وما رأى القلب من شيء يسر به ، % مذ بان منزلكم منا ولا ثلجا % % 7(@)(@@) % كالشمس صورتها غراء واضحة % تغشي ، إذا برزت ، من حسنها ، السرجا % % 8(@)(@@) % ضنت بنائلها هند فقد تركت % من غير ذنب أباالخطاب مختلجا % % PageV01P099 البحر : كامل تام 1(@)(@@) % نعق الغراب ببين ذات الدملج % ليت الغراب ببينها لم يزعج % 2(@)(@@) % نعق الغراب ودق عظم جناحه % وذرت به الأرياح بحر السمهج ! % 3(@)(@@) % ما زلت أتبعهم لأسمع حدوهم ، % حتى دخلت على ربيبة هودج % 4(@)(@@) % نظرت إلي بعين رئم أكحل % عمدا ، وردت عنك دعوة عوهج % % 5(@)(@@) % فبهت بدر حليها ، ووشاحها ، % وبريمها وسوارها فالدملج % 6(@)(@@) % فظللت في أمر الهوى متحيرا % من حر نار بالحشا متوهج % % 7(@)(@@) % من ذا يلمني إن بكيت صبابة % أو نحت صبا بالفؤاد المنضج ؟ % 8(@)(@@) % قالوا اصطبر عن حبها متعمدا % ولا تهلكن صبابة ، أو تحرج % % 9(@)(@@) % كيف صطباري عن فتاة طفلة % بيضاء في لون لها ذي زبرج % 10(@)(@@) % نافت على العذق الرطيب بريقها ، % وعلى الهلال المستبين الأبلج % PageV01P100 11(@)(@@) % لما تعاظم أمر وجدي في الهوى ، % وكلفت شوقا بالغزال الأدعج % 12(@)(@@) % فسريت في ديجو ليل حندس ، % متنجدا بنجاد سيف أعوج % 13(@)(@@) % فقعدت مرتقبا ألم ببيتها 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms21# ، % حتى ولجت به خفي المولج % 14(@)(@@) % حتى دخلت على الفتاة وإنها % % لتغط نوما مثل نوم المبهج % 15(@)(@@) % وإذا أبوها نائم ، وعبيده % من حولها مثل الجمال الهرج % 16(@)(@@) % فوضعت كفي عند مقطع خصرها % % فتنفست نفسا فلم تتهلج % 17(@)(@@) % فلزمتها فلثمتها فتفزعت % مني ، وقالت : من ؟ فلم أتلجلج % % 18(@)(@@) % قالت : وعيش أبي وحرمة إخوتي % % لأنبهن الحي إن لم تخرج % 19(@)(@@) % فخرجت خوف يمينها فتبسمت % فعلمت أن يمينها لم تحرج % 20(@)(@@) % فتناولت رأسي ، لتعلم مسه ، % بمخضب الأطراف غير مشنج % PageV01P101 21(@)(@@) % فلثمت فاها ، آخذا بقرونها % % شرب النزيف ببرد ماء الحشرج % PageV01P102 البحر : مجزوء الوافر 1(@)(@@) % ألا هل هاجك الأظعا % % ن إذ جاوزن مطلحا % % 2(@)(@@) % نعم ولوشك بينهم % جرى لك طائر سنحا % % 3(@)(@@) % سلكن الجنب من ركك ، % وضوء الفجر قد وضحا % % 4(@)(@@) % فمن يفرح ببينهم ، % فغيري إذ غدوا فرحا % % 5(@)(@@) % فهزت رأسها عجبا % وقالت : مازح مزحا % % 6(@)(@@) % وقلن : مقيلنا قرن ، % نباكر ماءه صبحا % % 7(@)(@@) % فيا عجبا لموقفنا % % وغيب ثم من كشحا % % 8(@)(@@) % تبعتهم بطرف العي % % ن حتى قيل لي فتضحا % % 9(@)(@@) % يودع يعضنا بعضا ، % وكل بالهوى جرحا % % PageV01P103 البحر : كامل تام 1(@)(@@) % بانت سليمى ف لفؤاد قريح % ودموع عيني في الرداء سفوح % 2(@)(@@) % ولقد جرى لك ، يوم حزم سويقة ، % فيما يعيف سانح وبريح % 3(@)(@@) % أحوى القوادم ، بالبياض ملمع ، % قلق المواقع ب لفراق يصيح % 4(@)(@@) % حسن لدي حديث من أحببته ، % وحديث من لا يستلذ قبيح % 5(@)(@@) % الحب أبغضه إلي أقله ، % صرح بذاك ، وراحة تصريح % % PageV01P104 البحر : مجزوء الرمل 1(@)(@@) % من لقلب غير صاح % في تصاب ومزاح % 2(@)(@@) % لج في ذكر الغواني % % بعد رشد وصلاح % % 3(@)(@@) % ولقد قلت لبكر % إذ مررنا بالصفاح % 4(@)(@@) % قف نسلم ونحيي % % ما علينا من جناح % % 5(@)(@@) % قمرتني جارتي عق % لي كقمر بالقداح % 6(@)(@@) % أقصدت قلبي وما إن % أقصدته بسلاح % PageV01P105 البحر : رمل تام 1(@)(@@) % حييا أثلة إذ جد رواح % وسلاها هل لعان من سراح ؟ % 2(@)(@@) % هل لمبتول بها مستقبل ، % دنف القلب عميد غير صاح % 3(@)(@@) % كان ، والود الذي يشكو بها ، % كمريق الماء في الأرض الشحاح % % 4(@)(@@) % أيها السائلنا عن حبها ، % تكثر المنطق في غير اتضاح % 5(@)(@@) % خلقت ذكرتها من شيمتي % % ما أضاء الأرض تبليج الصباح % 6(@)(@@) % ما لها عندي من هجر ، ولا % % سرها عندي بالفاشي المباح % % 7(@)(@@) % تسأل الود ، وددت انني % % بين 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms22# أسياف الأعادي والرماح % 8(@)(@@) % قادت العين إليها قلبه ، % عقب التشريق من يوم الأضاح % 9(@)(@@) % نظرة بالعين أدت سقما ، % نظرة يوما وصحبي ب لصفاح % 10(@)(@@) % أحدثت ردعا ورجعا ، بعدما % % طمع العائد منا ب لسراح % PageV01P106 11(@)(@@) % وشكوت الحب منها صادقا ، % ليلة المأزم في قول صراح % 12(@)(@@) % واقف البرذون أخفي منطقي ، % مظهرا عذري في غير نجاح : % 13(@)(@@) % لن تقوديني بالهجر ، ولن % تدركي ودي بجد واطراح ! % PageV01P107 البحر : خفيف تام 1(@)(@@) % بكر العاذلات فيها صراحا % % بسواد وما انتظرن صباحا % % 2(@)(@@) % قلن : عز الفؤاد عن أم بكر % بعزاء ، قد افتضحت افتضاحا % % 3(@)(@@) % قلت : ما حبها علي بعار % إن محب يوما من الدهر باحا % % 4(@)(@@) % قد أرى أنكن قلتن نصحا % واجتهدتن ، لو أريد صلاحا % % 5(@)(@@) % لو دويتن مثل دائي ، عذر % تن ، ولكن رأيتكن صحاحا % % 6(@)(@@) % أو تحببن لا تعدن فإني % % قد أريت الوشاة مني طراحا % % 7(@)(@@) % إنها ك لمهاة مشبعة الخل % خال صفر الحشا تجيع الوشاحا % % 8(@)(@@) % في محل النساء طيبة النش % ر ، يرى عندها الوسام قباحا % % 9(@)(@@) % لم تزل من هوى قريبة تهوى % % من يليها حتى هويت الرياحا % % 10(@)(@@) % قربته المقربات لحين % فأتى حتفه يسير كفاحا % % PageV01P108 البحر : بسيط تام 1(@)(@@) % الريح تسحب أذيالا وتنشرها % % يا ليتني كنت ممن تسحب الريح % 2(@)(@@) % كيما تجر بنا ذيلا ، فتطرحنا % % على التي دونها مغبرة سوح % 3(@)(@@) % أنى بقربكم ، أم كيف لي بكم ، % هيهات ذلك ما أمست لنا روح % 4(@)(@@) % فليت ضعف الذي ألقى يكون بها % % بل ليت ضعف الذي ألقى تباريح % % 5(@)(@@) % إحدى بنيات عمي دون منزلها % % أرض بقيعانها القيصوم والشيح % PageV01P109 البحر : متقارب تام 1(@)(@@) % تشط غدا دار جيراننا % % وللدار ، بعد غد ، أبعد % 2(@)(@@) % إذا سلكت غمر ذي كندة ، % مع الركب قصد لها الفرقد % 3(@)(@@) % وحث الحداة بها عبرها ، % سراعا ، إذا ما ونت تطرد % % 4(@)(@@) % هنالك ، إما تعزى الفؤاد ، % وإما على إثرهم يكمد % % 5(@)(@@) % فليست ببدع ، لئن دارها % % نأت ف لعزاء إذا أجلد % 6(@)(@@) % صرمت ، وواصلت ، حتى علم % % ت : أين المصادروالمورد % 7(@)(@@) % وجربت من ذاك ، حتى عرف % % ت ما أتوقى ، وما اعمد % % 8(@)(@@) % دعاني من بعد شيب القذا % % 9(@)(@@) % وعين تصابي وتدعو الفتى % % لما تركه للفتى أرشد % 10(@)(@@) % فتلك التي شيعتها الفتاة % إلى الخدر قلبي بها مقصد % PageV01P110 11(@)(@@) % تقول وقد جد من 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms23# بينها % % غداة غد ، عاجل موفد : % 12(@)(@@) % ألست مشيعنا ليلة % نقضي اللبانة أو نعهد % 13(@)(@@) % فقلت : بلى ، قل عندي لكم % كلال المطي ، إذا تجهد % 14(@)(@@) % فعودي إليها فقولي لها : % مساء غد لكم موعد % 15(@)(@@) % وآية ذلك أن تسمعي ، % إذا جئتكم ناشدا ينشد % 16(@)(@@) % فرحنا سراعا وراح الهوى % % إليها دليلا بنا يقصد % 17(@)(@@) % فلما دنونا لجرس النباح % إذا الضوء ، والحي لم يرقدوا % % 18(@)(@@) % نأينا عن الحي ، حتى إذا % % تودع من نارها الموقد % % 19(@)(@@) % وناموا بعثنا لها ناشدا % وفي الحي بغية من ينشد % % 20(@)(@@) % فقامت ، فقلت : بدت صورة ، % من الشمس شيعها الأسعد % PageV01P111 21(@)(@@) % فجاءت تهادى على رقبة ، % من الخوف ، أحشاؤها ترعد % % 22(@)(@@) % وكفت سوابق من عبرة % على الخد ، جال بها الإثمد % % 23(@)(@@) % تقول وتظهر وجدا بنا % % ووجدي ، وإن أظهرت ، أوجد : % 24(@)(@@) % لمما شقائي تعلقتكم % وقد كان لي عندكم مقعد % 25(@)(@@) % عراقية ، وتهامي الهوى ، % يغور بمكة أو ينجد % PageV01P112 البحر : كامل تام 1(@)(@@) % هل أنت إن بكر الأحبة غادي ، % أم قبل ذلك مدلج بسواد ؟ % 2(@)(@@) % كيف الثواء ببطن مكة بعدما % % وبرحلة منح طية وبلاد % 3(@)(@@) % هموا ببعد منك غير تقرب ، % شتان بين القرب والإبعاد ! % 4(@)(@@) % لا كيف قلبك إن ثويت مخامرا % سقما خلافهم وحزنك بادي % % 5(@)(@@) % قد كنت قبل وهم لأهلك جيرة % صبا تطيف بهم كأنك صادي % % 6(@)(@@) % هيمان يمنعه السقاة حياضهم ، % حيران يرقب غفلة الوراد % 7(@)(@@) % فالآن ، إذ جد الرحيل ، وقربت % بزل الجمال لطية وبعاد % 8(@)(@@) % ولقد أرى أن ليس ذلك نافعي % % ما عشت عندك في هوى ووداد % % 9(@)(@@) % ولقد منحت الود مني ، لم يكن % منك إلي ، بما فعلت ، أيادي % % 10(@)(@@) % إني لأترك من يجود بنفسه % وموكل بوصال كل جماد % % PageV01P113 11(@)(@@) % يا ليل إني واصلي أو فاصرمي % % علقت بحبكم بنات فؤادي % % 12(@)(@@) % كم قد عصيت إليك من متنصح % خان القرابة أو أعان أعادي % % 13(@)(@@) % وتنوفة أرمي بنفسي عرضها ، % شوقا إليك بلا هداية هادي % % 14(@)(@@) % ما إن بها لي غير سيفي صاحب % وذراع حرف كالهلال وسادي % % 15(@)(@@) % بمعرس فيه إذا ما مسه % جلدي ، خشونة مضجع وبعاد % % 16(@)(@@) % قمن من الحدثان تمسي أسده % هدء الظلام ، كثيرة الإيعاد % % 17(@)(@@) % بالوجد أعذر ما يكون ، وبالبكا ، % أرسلت تعتب الرباب وقالت : % PageV01P114 البحر : خفيف تام 1(@)(@@) % أرسلت تعتب الرباب ، وقالت : % قد أتانا ما 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms24# قلت في الإنشاد % 2(@)(@@) % قلت : لا تغضبي فدى لك قولي % % بلساني ، وما يجن فؤادي % % 3(@)(@@) % ثم لا تغضبي فدى لك نفسي % % ثم أهلي وطارفي وتلادي % % 4(@)(@@) % إن تعودي تكن تهامة داري ، % وبنجد ، إذا حللت ، معادي % % 5(@)(@@) % أنت أهوى إلي من سائر الن % % اس ، ذريني من كثرة التعداد % % PageV01P115 البحر : خفيف تام 1(@)(@@) % طال ليلي فما أحس رقادي % % واعترتني الهموم بالتسهاد % % 2(@)(@@) % وتذكرت قول نعم ، وكان الذ % % ذكر منها مما يهيج فؤادي % % 3(@)(@@) % يوم قالت لتربها : سائليه % أيريد الرواح ، أم هو غادي ؟ % 4(@)(@@) % و حذري أن تراك عين وإن لا % % ت بعض المكثرين الأعادي % % 5(@)(@@) % فاجعلي علة كتابا لك استح % % مل في ظاهر من السر بادي % % 6(@)(@@) % ثم قولي كفرت يا أكذب النا % % س جميعا من حاضرين وبادي % % PageV01P116 البحر : طويل 1(@)(@@) % لقد أرسلت في السر ليلى تلومني % % وتزعمني ذا ملة طرفا جلدا % % 2(@)(@@) % تقول : لقد اخلفتنا ما وعدتنا ، % وبالله ما أخلفتها طائعا وعدا % % 3(@)(@@) % فقلت مروعا للرسول الذي أتى : % تراه لك الويلات من أمرها جدا % % 4(@)(@@) % إذا جئتها ف قر السلام وقل لها : % ذري الجور ليلى و سلكي منهجا قصدا % % 5(@)(@@) % تعدين ذنبا ، انت ، ليلى ، جنيته % % علي ولا أحصي ذنوبكم عدا % % 6(@)(@@) % أفي غيبتي عنكم ليال مرضتها % % تزيدينني ، ليلى ، على مرضي جهدا ؟ % 7(@)(@@) % تجاهل ما قد كان ليلى كأنما % % أقاسي بها من حرة حجرا صلدا % % 8(@)(@@) % فلا تحسبي أني تمكثت عنكم ، % ونفسي ترى من مكثها عنكم بدا % % 9(@)(@@) % ولا أن قلبي الدهر يسلى حياته ، % ولا رائم ، يوما ، سوى ودكم ودا % % 10(@)(@@) % الا فاعلمي أنا أشد صبابة ص ، % وأصدق عند البين من غيرنا عهدا % % PageV01P117 11(@)(@@) % غدا يكثر الباكون منا ومنكم % وتزداد داري من دياركم بعدا % % 12(@)(@@) % فإن تصرميني لا أرى الدهر قرة % لعيني ، ولا ألقى سرورا ولا سعدا % % 13(@)(@@) % فإن شئت حرمت النساء سواكم % وإن شئت لم أطعم نقاخا ولا بردا % % 14(@)(@@) % وإن شئت غرنا نحوكم ثم لم نزل % بمكة ، حتى تجلسوا ، قابلا ، نجدا % % PageV01P118 البحر : خفيف تام 1(@)(@@) % تلك هند تصد للهجر صدا % % أدلال ، أم هجر هند أجدا ؟ % 2(@)(@@) % أو لتنكا به كلوم فؤادي % % م أرادت قتلي ضرارا وعمدا ؟ % 3(@)(@@) % أيها الناصح الامين رسولي ، % قل لهند مني إذا جئت هندا 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms25# % % 4(@)(@@) % يعلم الله أن قد اوتيت مني ، % غير من لذاك ، نصحا وودا % % 5(@)(@@) % قد براه وشفه الحب حتى % % صار ، مما به ، عظاما ، وجلدا % % 6(@)(@@) % ما تقربت بالصفاء لأدنو % % منك إلا نأيت وازددت بعدا % % 7(@)(@@) % قد يثني عنك الحفيظة حتى % % لم أجد من سؤالك اليوم بدا % % 8(@)(@@) % فارحمي مغرما بحبك لاقى % % من جوى الحب والحفيظة ، جهدا % % PageV01P119 البحر : طويل 1(@)(@@) % قضى منشر الموتى علي قضية % بحبك لم أملك ولم آتها عمدا % % 2(@)(@@) % فليس لقرب بعد قربك لذة ، % ولست أرى نأيا سوى نأيكم بعدا % % 3(@)(@@) % أحب الألى يأتون من نحو أرضها % % إلي ، من الركبان ، أقربهم عهدا % % 4(@)(@@) % فما نلتقي من بعد يأس وهجرة % وصدع النوى ، إلا وجدت لها بردا % % 5(@)(@@) % على كبد قد كاد يبدي بها النوى % % صدوعا وبعض الناس يحسبني جلدا % % PageV01P120 البحر : بسيط تام 1(@)(@@) % أبلغ سليمى بأن البين قد أفدا % % وأنبىء سليمى بأنا رائحون غدا % % 2(@)(@@) % وقل لها كيف أن يلقاك خالية % فليس من بان لم يعهد كمن عهدا % % 3(@)(@@) % نعهد إليكش ، فأوفينا بمعهدنا ، % يا أصدق الناس موعودا إذا وعدا % % 4(@)(@@) % وأحسن الناس في عيني وأجملهم % من ساكن الغور أو من يسكن النجدا % % 5(@)(@@) % لقد حلفت يمينا غير كاذبة ، % صبرا أضاعفها يا سكن مجتهدا % % 6(@)(@@) % بالله ما نمت من نوم تقر به % عيني ، ولا زال قلبي بعدكم كمدا % % 7(@)(@@) % كم بالحرام ، ولوكنا نحالفه ، % من كاشح ود أنا لا نرى أبدا % % 8(@)(@@) % حمل من بغضنا غلا يعالجه % فقد تملا علينا قلبه حسدا % % 9(@)(@@) % وذات وجد علينا ما تبوح به ، % تحصي الليالي إذا غبنا لها عددا % % 10(@)(@@) % تبكي علينا ، إذا ما اهلها غفلوا ، % وتكحل العين من وجد بنا سهدا % % PageV01P121 11(@)(@@) % حريصة إن تكف الدمع جاهدة % فما رقا دمع عينيها ، وما جمدا % % 12(@)(@@) % بيضاء آنسة للخدر آلفة % ولم تكن تألف الخوخات والسددا % % 13(@)(@@) % قامت تراءى على خوف تشيعني ، % مشي الحسير المزجى جشم الصعدا % % 14(@)(@@) % لم تبلغ الباب حتى قال نسوتها ، % من شدة البهر هذا الجهد ف تئدا % % 15(@)(@@) % أقعدنها ، وبنا ما قال ذو حسب : % صب بسلمى إذا ما أقعدت قعدا % % 16(@)(@@) % فكان آخر ما قالت وقد قعدت % أن سوف تبدي لهن الصبر والجلدا % % 17(@)(@@) % يا ليلة السبت قد زودتني سقما % حتى 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms26# الممات ، وهما صدع الكبدا % % PageV01P122 البحر : بسيط تام 1(@)(@@) % أمسى بأسماء هذا القلب معمودا % % إذا أقول صحا ، يعتاده عيدا % % 2(@)(@@) % كأنني ، يوم أمسي لا تكلمني ، % ذو بغية يبتغي ما ليس موجودا % % 3(@)(@@) % أجري على موعد منها فتخلفني % % فما أمل ، وما توفي المواعيدا % % 4(@)(@@) % كأن أحور ، من غزلان ذي بقر ، % أهدى لها شبه العينين والجيدا % % 5(@)(@@) % قامت تراءى وقد جد الرحيل بنا % % لتنكأ القرح من قلب قد صطيدا % % 6(@)(@@) % بمشرق مثل قرن الشمس بازغة % ومسبكر على لباتها سودا % % 7(@)(@@) % قد طال مطلي ، لو ان اليأس ينفعني ، % أو أن أصادف من تلقائها جودا % % 8(@)(@@) % فليس تبذل لي عفوا ، واكرمها % % من أن ترى عندنا في الحرص تشديدا % % PageV01P123 البحر : رمل تام 1(@)(@@) % ليت هندا أنجزتنا ما تعد % وشفت أنفسنا مما تجد % 2(@)(@@) % واستبدت مرة واحدة ، % إنما العاجز من لا يستبد % PageV01P124 البحر : كامل تام 1(@)(@@) % يا صاح ، لا تعذل اخاك ، فإنه ، % ما لا ترى من وجد نفسي ، اوجد % 2(@)(@@) % الله يعلم أنني لأظنني % % إن بنتم ، أم الوليد ، سأكمد % 3(@)(@@) % ما لي أرى حب البرية كلها % % عندي يبيد وحبكم يتجدد ؟ % 4(@)(@@) % وإذا أقول : سلا ، تجدد ما به % % منها عقائل حبها المتردد % 5(@)(@@) % شمس النهار ، إذا أرادت زينة ، % والبدر ، عاطلة ، إذا تتجرد % % 6(@)(@@) % كلف الفؤاد بها فليس يصده % عنها العدو ، ولا الصديق المرشد % % PageV01P125 البحر : كامل تام 1(@)(@@) % يا صاحبي ، تصدعت كبدي ، % أشكو الغداة إليكما وجدي % % 2(@)(@@) % من حب جارية كلفت بها % % حلت بمكة في بني سعد % 3(@)(@@) % حلت بمكة والنوى قذف % هيهات مكة من قرى لد % 4(@)(@@) % لا دارها داري ، فتسعفني ، % هذا لعمرك من شقا جدي % % 5(@)(@@) % والله لا أنسى مقالتها ، % حتى أضمن ميتا لحدي % % 6(@)(@@) % ووداعها يوم الرحيل وقد % زم المطي لبينهم تخدي % % 7(@)(@@) % والعين واكفة ، وقد خضلت ، % مما تفيض ، عوارض الخد % 8(@)(@@) % إذهب ، فديتك ! غير مبتعد ، % لا كان هذا آخر العهد % % PageV01P126 البحر : طويل 1(@)(@@) % ارقت ، ولم املك لهذا الهوى ردا ، % وأورثني حبي وكتمانه جهدا % % 2(@)(@@) % كتمت الهوى ، حتى براني وشفني ، % وعزيت قلبا لا صبورا ولا جلدا % % 3(@)(@@) % إذا قلت لا تهلك أسى وصبابة % عصاني وإن عاتبته زدته جدا % % 4(@)(@@) % وإني لأهواها ، وأصرف جاهدا ، % حذار عيون الناس ، عن بيتها عمدا % % 5(@)(@@) % رأيتك يوما ، فاقتبست حرارة ، % فيا 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms27# ليتها كانت على كبدي بردا % % 6(@)(@@) % هويتك و ستحلتك نفسي فأقبلي % % ولا تجعلي تقريبنا منكم بعدا % % PageV01P127 البحر : كامل تام 1(@)(@@) % يا صاح هل تدري ، وقد جمدت % عيني بما ألقى من الوجد ؟ % 2(@)(@@) % لما رأيت ديارها درست % وتبدلت أعلامها بعدي % % 3(@)(@@) % وذكرت مجلسها ومجلسنا ، % ذات العشاء بمسقط النجد % % 4(@)(@@) % ورسالة منها تعاتبني % % فرددت معتبة على هند % 5(@)(@@) % أن لا تلومي في الخروج ، فما % % أسطيعكم إلا على جهد % 6(@)(@@) % والله ، والبيت العتيق ، لقد % % ساويت عندي جنة الخلد % 7(@)(@@) % فاعصي الوشاة بنا فإن لكم % عندي مصافاة على عمد % PageV01P128 البحر : كامل تام 1(@)(@@) % نام الخلي ، وبت غير موسد ، % أرعى النجوم بها كفعل الأرمد % 2(@)(@@) % حتى إذا الجوزاء وهنا حلقت ، % وعلت كواكبها كجمر موقد % 3(@)(@@) % نام الألى ليس الهوى من شأنهم ، % وكفاهم الإدلاج من لم يرقد % 4(@)(@@) % في ليلة طخياء يخشى هولها % % ظلماء من ليل التمام الأسود % 5(@)(@@) % فطرقت باب العامرية موهنا % فعل الرفيق أتاهم للموعد % 6(@)(@@) % فإذا وليدتها : فقلت لها : افتحي % % لمتيم ، صب الفؤاد ، مصيد % % 7(@)(@@) % فتفرج البابان عن ذي مرة % ماض على العلات ليس بقعدد % 8(@)(@@) % فتجهمت ، لما رأتني داخلا % بتلهف من قولها ، وتهدد % 9(@)(@@) % ثم ارعوت شيئا وخفض جأشها % % بعد الطموح تهجدي وتوددي % % 10(@)(@@) % في ذاك ما قد قلت : إني ماكث % عشرا ، فقالت : ما بدا لك فاقعد % % PageV01P129 11(@)(@@) % حتى إذا ما العشر جن ظلامها ، % قالت ألا حان التفرق فاعهد % 12(@)(@@) % واذكر لنا ما شئت مما تشتهي ، % والله لا نعصيك أخرى المسند % % PageV01P130 البحر : كامل تام 1(@)(@@) % إن الخليط مودعوك غدا % % قد أجمعوا من بينهم أفدا % % 2(@)(@@) % وأراك إن دار بهم نزحت % لا شك تهلك إثرهم كمدا % % 3(@)(@@) % ما هكذا أحببت قبلهم % ممن يجد وصاله أحدا % % 4(@)(@@) % قالت لمنصفة تراجعها ، % فأذاب ما قد قالت الكبدا % % 5(@)(@@) % الحين ساق إلى دمشق وما % % كانت دمشق لأهلنا بلدا % % 6(@)(@@) % إلا تكاليف الشقاء بمن % لم تمس منا داره صددا % % 7(@)(@@) % متنقلا ذا ملة طرفا ، % لا يستقيم لواصل أبدا % % 8(@)(@@) % قالت : لذاك جزيت ، فاعترفي % % إذ تبعثين بكتبه البردا % % 9(@)(@@) % فالآن ذوقي ما جزيت له % صبرا ، لما قد جئت معتمدا % % 10(@)(@@) % إن المليك أبى بقدرته % % أن تعلمي ما تكسبين غدا % % PageV01P131 البحر : خفيف تام 1(@)(@@) % من لقلب عند الرباب عميد % غير ما 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms28# مفتدى ، ولا مردود % 2(@)(@@) % قربته بالوعد حتى إذا ما % % تبلته لم توف بالموعود % 3(@)(@@) % آنس دلها قريب ، فمن % % يسمع يقل ما نوالها ببعيد % % 4(@)(@@) % والذي جرب المواعد قد يع % لم منها أن لن تنيل بجود % PageV01P132 البحر : طويل 1(@)(@@) % ثلاثة أحجار ، وخط خططته % لنا بطريق الغور بالمتنجد % 2(@)(@@) % ومعمل أصحابي وخوص ضوامر % وممشى إلى البستان يوما ومقعد % 3(@)(@@) % ورش الفتاة الطل بالأبطح الذي % % جلسنا إليه ، والمطي بأقتد % % 4(@)(@@) % وإرسالها ، لما أجد رحيلها ، % على عجل باد من البين ، موفد % % 5(@)(@@) % بأن بت ، عسى أن يستر الليل مقعدا ، % ويغفل عنا ذو الردى المتهجد % % PageV01P133 البحر : بسيط تام 1(@)(@@) % ألمم بزينب ، إن البين قد أفدا ، % قل الثواء لئن كان الرحيل غدا % % 2(@)(@@) % أمسى العراقي لا يدري ، إذا برزت % % من ذا تطوف بالأركان ، أو سجدا % % 3(@)(@@) % لعمرها ما أراني ، إن نوى نزحت ، % ودام ذا الحب ، إلا قاتلي كمدا % % 4(@)(@@) % بكر دعا فأتى عمدا لشقوته % ما جاء من ذاك إن غيا وإن رشدا % % 5(@)(@@) % من ينه يعص ومن يحسد ولا وأبي % % ما ضرني من وشى عندي ومن حسدا % % 6(@)(@@) % هذا يقربه منها ، وعبرتها % % يوم الفراق ، فما أرعى ، وما اقتصدا % % 7(@)(@@) % قد حلفت ليلة الصورين جاهدة % وما على المرء إلا الحلف مجتهدا % % 8(@)(@@) % لتربها ولأخرى من مناصفها % % لقد وجدت به فوق الذي وجدا % % 9(@)(@@) % لو جمع الناس ثم اختير صفوتهم % شخصا من الناس لم أعدل به أحدا % % 10(@)(@@) % لقد نهيت فؤادي عن تطلبها ، % فاغتشني ، وأتى ما شاء معتمدا % % PageV01P134 البحر : مجزوء الوافر 1(@)(@@) % منعت النوم بالسهد % من العبرات والكمد % 2(@)(@@) % لحب داخل في الجوف ، % ف ذي قرح على كبدي % % 3(@)(@@) % تراءت لي لتقتلني % % فصادتني ، ولم أصد % 4(@)(@@) % بذي أشر ، شتيت النب % ت ، صافي اللون ، كالبرد % 5(@)(@@) % ثقال ك لمهاة خري % % دة ، من نسوة خرد % % 6(@)(@@) % وتمشي في تأودها % % هوينا المشي في بدد % 7(@)(@@) % كما يمشي مهيض العظ % م بعد الجبر في الصعد % 8(@)(@@) % وفندني الوشاة بها ، % وما في ذاك من فند % PageV01P135 البحر : خفيف تام 1(@)(@@) % ولقد قلت إذ تطاول هجري % % رب ، لا صبر لي على هجر هند % 2(@)(@@) % رب ، قد شفني وأوهن عظمي ، % وبراني وزادني فوق جهدي % % 3(@)(@@) % رب ، حملتني من الحب ثقلا ، % رب لا صبر لي ، ولا 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms29# عزم عندي % % 4(@)(@@) % رب علقتها تجدد هجري % % ذاك ، والله ، من شقاوة جدي % % 5(@)(@@) % ليس حبي لها ببدعة أمر ، % قد أحب الرجال قبلي وبعدي % % 6(@)(@@) % جعل الله من أحب سواكم ، % من جميع الانام ، نفسك يفدي % % PageV01P136 البحر : منسرح 1(@)(@@) % يا صاح لا تلحني ، وقل شددا ، % إني أرى الحب قاتلي كمدا % % 2(@)(@@) % جمل أحاديث ذا الفؤاد إذا % % هب وأحلامه إذا رقدا % % 3(@)(@@) % إن شئت حدثتك اليقين لكي % % تعذرني ، أو حلفت مجتهدا % % 4(@)(@@) % بالله ، لولا الرجاء إذ منعت % معروفها اليوم ، أن تجود غدا % % 5(@)(@@) % إذا لقد فت حبها كبدي % % إن كان حب يفتت الكبدا % % 6(@)(@@) % ما ذاك من نائل ينيل ، ولا % % أسدت ، فتجزي به ، إلي يدا % % 7(@)(@@) % إلا سفاها ، وإنني كلف ، % أحسب غيي ، من حبها ، رشدا % % 8(@)(@@) % ألا تراني مخامرا سقما % كحل عيني بمأقها السهدا ؟ % 9(@)(@@) % أحببت حبا مثل الجنون ، فقد % % أبلى عظامي وغير الجسدا % % PageV01P137 البحر : بسيط تام 1(@)(@@) % إستقبلت ورق الريحان تقطفه ، % وعنبر الهند والوردية الجددا : % 2(@)(@@) % ألست تعرفني في الحي ، جارية ، % ولم أخنك ، ولم تمدد إلي بدا ؟ % PageV01P138 البحر : طويل 1(@)(@@) % وناهدة الثديين قلت لها : اتكي % % على الرمل ، من جبانة لم توسد % 2(@)(@@) % فقالت : على اسم الله أمرك طاعة ، % وإن كنت قد كلفت ما لم أعود % 3(@)(@@) % فما زلت في ليل طويل ملثما % لذيذ رضاب المسك ، كالمتشهد % 4(@)(@@) % فلما دنا الإصباح قالت : فضحتني % % فقم غير مطرود وإن شئت فازدد ! % 5(@)(@@) % فما ازددت منها غير مص لثاتها ، % وتقبيل فيها ، والحديث المردد % % 6(@)(@@) % تزودت منها واتشحت بمرطها % % وقلت لعيني : اسفحا الدمع من غد % % 7(@)(@@) % فقامت تعفي بالرداء مكانها ، % وتطلب شذرا من جمان مبدد % % PageV01P139 البحر : مجزوء الوافر 1(@)(@@) % كتبت إليك من بلدي % % كتاب موله كمد % 2(@)(@@) % كئيب ، واكف العيني % % ن ، بالحسرات منفرد % 3(@)(@@) % يؤرقه لهيب الشو % ق بين السحر والكبد % 4(@)(@@) % فيمسك قلبه بيد ، % ويمسح عينه بيد % PageV01P140 البحر : طويل 1(@)(@@) % ومن كان محزونا بإهراق عبرة % وهى غربها ، فليأتنا نبكه غدا % % 2(@)(@@) % نعنه على الإثكال إن كان ثاكلا ، % وإن كان محروبا وإن كان مقصدا % % PageV01P141 البحر : متقارب تام 1(@)(@@) % وحسن الزبرجد في نظمه ، % على واضح الليت زان العقودا % % 2(@)(@@) % يفصل ياقوته دره ، % وكالجمر أبصرت فيه الفريدا % % PageV01P142 البحر : مجزوء الخفيف 1(@)(@@) % قل لهند وتربها % % قبل شحط النوى غدا ؟ % 2(@)(@@) % إن 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms30# تجودي فطالما % % بت ليلي مسهدا % % 3(@)(@@) % أنت ، في ود بيننا ، % خير ما عندنا يدا % % 4(@)(@@) % حين تدلي مضفرا % حالك اللون ، أسودا % % PageV01P143 البحر : سريع 1(@)(@@) % لم تدر ، وليغفر لها ربها ، % ما جشمتنا أمة الواحد % 2(@)(@@) % جشمت الهول براذيننا % % نسأل عن بيت أبي خالد % 3(@)(@@) % نسأل عن شيخ بني كاهل % أعيا خفاء نشدة الناشد % PageV01P144 البحر : رمل تام 1(@)(@@) % تركوا خيشا على أيمانهم % ويسوما عن يسار المنجد % PageV01P145 البحر : كامل تام 1(@)(@@) % لا فخر إلا قد علاه محمد % فإذا فخرت به ، فإني أشهد % 2(@)(@@) % إن قد فخرت وقفت كل مفاخر ، % وإليك في الشرف الرفيع المقصد % 3(@)(@@) % ولنا دعائم قد تناهى أول ، % في المكرمات ، جرى عليها الموالد % 4(@)(@@) % من ذاقها ، حاشا النبي واهله ، % في الأرض غطغطه الخليج المزبد % 5(@)(@@) % دع ذا ورح بفناء خود بضة ، % مما نطقت به ، وغنى معبد % 6(@)(@@) % مع فتية تندى بطون أكفهم % جودا ، إذا هر الزمان الأنكد % 7(@)(@@) % يتناولون سلافة عانية ، % طابت لشاربها وطاب المقعد % PageV01P146 البحر : طويل 1(@)(@@) % تخيرت من نعمان عود أراكة % لهند ولكن من يبلغه هندا ؟ % 2(@)(@@) % إذا أنت لم تعشق ولم تدر ما لهوى % % فكن حجرا من يابس الصخر جلمدا % % 3(@)(@@) % تأطرن حتى قلت لسن بوارحا % وذبن كما ذاب السديف المسرهد % PageV01P147 البحر : منسرح 1(@)(@@) % تمشي الهوينا إذا مشت فضلا % مشي النزيف المخمور في الصعد % 2(@)(@@) % تظل من زور بيت جارتها ، % واضعة كفها على الكبد % 3(@)(@@) % يا من لقلب متيم ، سدم ، % عان ، رهين ، مكلم ، كمد % 4(@)(@@) % أزجره ، وهو غير مزدجر % عنها وطرفي مكحل السهد % PageV01P148 البحر : متقارب تام 1(@)(@@) % ألا حبذا ، حبذا ، حبذا % % حبيب تحملت منه الأذى ! % 2(@)(@@) % ويا حبذا برد أنيابه ، % إذا اظلم الليل واجلوذا % % PageV01P149 البحر : طويل 1(@)(@@) % أمن آل نعم أنت غاد فمبكر % غداة غد ، أم رائح فمهجر % 2(@)(@@) % لحاجة نفس لم تقل في جوابها % % فتبلغ عذرا والمقالة تعذر % 3(@)(@@) % تهيم إلى نعم فلا الشمل جامع ، % ولا الحبل موصول ولا القلب مقصر % 4(@)(@@) % ولا قرب نعم إن دنت لك نافع ، % ولا نأيها يسلي ولا أنت تصبر % 5(@)(@@) % وأخرى أنت من دون نعم ، ومثلها % % نهى ذا النهى لو ترعوي أو تفكر % 6(@)(@@) % إذا زرت نعما لم يزل ذو قرابة % لها ، كلما لاقيته ، يتنمر % 7(@)(@@) % عزيز عليه أن ألم 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms31# ببيتها % % يسر لي الشحناء ، والبغض مظهر % % 8(@)(@@) % ألكني إليها بالسلام فإنه % يشهر إلمامي بها وينكر % 9(@)(@@) % بآية ما قالت غداة لقيتها % % بمدفع أكنان : ( أهذا المشهر ؟ ) % 10(@)(@@) % أشارت بمدارها ، وقالت لأختها : % ' أهذا المغيري الذي كان يذكر ؟ ' % PageV01P150 11(@)(@@) % ' أهذا الذي اطربت عتا ، فلم اكن ، % وعيشك ، انساه إلى يوم أقبر ' % 12(@)(@@) % فقالت : ' نعم ، لا شك غير لونه % سرى الليل يحيي نصه والتهجر ) % 13(@)(@@) % ' لئن كان إياه ، لقد حال بعدنا % % عن العهد ، والغنسان قد يتغير ' % 14(@)(@@) % رأت رجلا أما إذا الشمس عارضت % فيضحى وأما بالعشي فيخصر % 15(@)(@@) % أخا سفر جواب أرض تقاذفت % به فلوات فهو أشعث أغبر % 16(@)(@@) % قليلا على الظهر المطية ظله ، % سوى ما نفى عنه الرداء المحبر % % 17(@)(@@) % واعجبها من عيشها ظل غرفة ، % وريان ملتف الحدائق أخضر % 18(@)(@@) % ووال كفاها كل شيء يهمها ، % فليست لشيء آخر الليل تسهر % % 19(@)(@@) % وليلة ذي دوران جشمتني السرى % % وقد يجشم الهول المحب المغرر % % 20(@)(@@) % فبت رقيبا للرفاق على شفا ، % أحاذر منهم من يطوف ، وأنظر % % PageV01P151 21(@)(@@) % إليهم متى يستمكن النوم منهم % ولي مجلس لولا اللبانة أوعر % 22(@)(@@) % وباتت قلوصي بالعراء ورحلها ، % لطارق ليل أو لمن جاء معور % 23(@)(@@) % وبت أناجي النفس : ( أين خباؤها ؟ % وكيف لما آتي من الأمر مصدر ؟ ) % 24(@)(@@) % فدل عليها القلب ريا عرفتها % % لها وهوى النفس الذي كاد يظهر % 25(@)(@@) % فلما فقدت الصوت منهم وأطفئت % مصابيح شبت ب لعشاء وأنؤر % 26(@)(@@) % وغاب قمير كنت أرجو غيوبه ، % وروح رعيان ، ونوم سمر % 27(@)(@@) % ونفضت عني النوم ، أقبلت مشية ال % حباب ، وركني ، خشية القوم ، أزور % % 28(@)(@@) % فحييت إذ فاجأتها ، فتولهت ، % وكادت بمخفوض التحية تجهر % % 29(@)(@@) % وقالت وعضت ب لبنان : ( فضحتني % % وأنت امرؤ ، ميسور أمرك أعسر ! ' % 30(@)(@@) % ' أريتك ، إذ هنا عليك ، ألم تخف ، % وقيت ، وحولي من عدوك حضر ؟ ' % PageV01P152 31(@)(@@) % ' فوالله ما ادري أتعجيل حاجة ، % سرت بك ، أم قد نام من كنت تحذر ؟ ) % 32(@)(@@) % فقلت لها : ' بل قادني الشوق والهوى % % إليك ، وما عين من الناس تنظر ) % 33(@)(@@) % فقالت وقد لانت وأفرخ روعها : % ' كلاك بحفظ ربك المتكبر ! ' % 34(@)(@@) % ( فأنت ، أبا الخطاب ، غير مدافع ، % علي أمير ، ما مكثت ، مؤمر ) % 35(@)(@@) % فبت قرير العين ، أعطيت حاجتي ، % أقبل فاها ، في الخلاء ، فأكثر % % 36(@)(@@) % فيا لك من ليل تقاصر طوله ، % وما كان ليلي قبل 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms32# ذلك يقصر % 37(@)(@@) % ويا لك من ملهى هناك ومجلس % لنا ، لم يكدره علينا مكدر % % 38(@)(@@) % يمج ذكي المسك منها مفلج ، % رقيق الحواشي ذو غروب مؤشر % % 39(@)(@@) % تراه ، إذا تفتر عنه ، كأنه % حصى برد ، أو أقحوان منور % % 40(@)(@@) % وترنو بعينيها إلي ، كما رنا ، % إلى ربرب وسط الخميلة ، جؤذر % % PageV01P153 41(@)(@@) % فلما تقضى الليل إلا أقله ، % وكادت توالي نجمه تتغور % % 42(@)(@@) % أشارت ' بأن الحي قد حان منهم % هبوب ، ولكن موعد لك عزور ' % 43(@)(@@) % فما راعني إلا مناد : ( ترحلوا ! % وقد لاح مفتوق من الصبح أشقر % 44(@)(@@) % فلما رأت من قد تنبه منهم % وأيقاظهم ، قالت : ' أشر كيف تأمر ؟ ' % 45(@)(@@) % فقلت : ( أباديهم فإما أفوتهم % وإما ينال السيف ثأرا فيثأر ) % 46(@)(@@) % فقالت : ( أتحقيقا لما قال كاشح % علينا ، وتصديقا لما كان يؤثر ؟ ' % 47(@)(@@) % ' فإن كان ما لابد منه ، فغيره ، % من الأمر أدنى للخفاء وأستر ) % 48(@)(@@) % ( أقص على أختي بدء حديثنا % % وما لي من أن تعلما متأخر ) % 49(@)(@@) % ' لعلهما أن تطلبا لك مخرجا ، % وأن ترحبا صدرا بما كنت أحصر ) % PageV01P154 50(@)(@@) % فقامت كئيبا ليس في وجهها دم ، % من الحزن ، تذري عبرة تتحدر % % 51(@)(@@) % فقامت إليها حرتان عليهما % % كساءان من خز دمقس وأخضر % 52(@)(@@) % فقالت لأختيها : ' أعينا على فتى ، % أتى زائرا والأمر للأمر يقدر ) % 53(@)(@@) % فأقبلتا فارتاعتا ثم قالتا :(@)(@@) % أقلي عليك اللوم فالخطب أيسر ) % 54(@)(@@) % فقالت لها الصغرى : ' سأعطيه مطرفي % % ودرعي وهذا البرد إن كان يحذر ) % 55(@)(@@) % ( يقوم فيمشي بيننا متنكرا % فلا سرنا يفشو ولا هو يظهر ' % 56(@)(@@) % فكان مجني دون من كنت اتقي ، % ثلاث شخوص : كاعبان ومعصر % 57(@)(@@) % فلما أجزنا ساحة الحي قلن لي :(@)(@@) % ألم تتق الأعداء والليل مقمر ؟ ) % 58(@)(@@) % وقلن : ( أهذا دأبك الدهر سادرا % أما تستحي أم ترعوي أم تفكر ؟ ' % 59(@)(@@) % ' إذا جئت فامنح طرف عينيك غيرنا ، % لكي يحسبوا أن الهوى حيث تنظر ) % PageV01P155 60(@)(@@) % فآخر عهد لي بها حين أعرضت ، % ولاح لها خد نقي ، ومحجر % % 61(@)(@@) % سوى أنني قد قلت : يا نعم قولة % لها والعتاق الأرحبيات تزجر % 62(@)(@@) % هنيئا لأهل العامرية نشرها اللذي % % ذ ، ورياها التي أتذكر % 63(@)(@@) % فقمت إلى عنس تخون نيها % % سرى الليل حتى لحمها متحسر % 64(@)(@@) % وحبسي على الحاجات ، حتى كأنها % % بقية لوح أو شجار مؤسر % 65(@)(@@) % وماء بموماة قليل أنيسه % بسابس لم يحدث به 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms33# الصيف محضر % % 66(@)(@@) % به مبتنى للعنكبوت كأنه % على طرف الأرجاء خام منشر % % 67(@)(@@) % وردت وماأدري أما بعد موردي % % من الليل أم ما قد مضى منه أكثر % 68(@)(@@) % فقمت إلى مغلاة أرض كأنها % % إذا التفتت مجنونة حين تنظر % 69(@)(@@) % تنازعني حرصا على الماء رأسها % % ومن دون ما تهوى قليب معور % PageV01P156 70(@)(@@) % محاولة للماء ، لولا زمامها ، % وجذبي لها ، كادت مرارا تكسر % % 71(@)(@@) % فلما رأيت الضر منها ، وأنني % % ببلدة أرض ليس فيها معصر % 72(@)(@@) % قصرت لها من جانب الحوض منشأ % جديدا كقاب الشبر أو هو أصغر % 73(@)(@@) % إذا شرعت فيه ، فليس لملتقى % % مشافرها منه قدى الكف مسأر % % 74(@)(@@) % ولا دلو إلا القعب كان رشاءه % إلى الماء نسع والأديم والمضفر % 75(@)(@@) % فسافت ، وما عافت ، وما رد شربها % % عن الري مطروق من لماء أكدر % PageV01P157 البحر : طويل 1(@)(@@) % يقول خليلي إذ أجازت حمولها % % خوارج من شوطان : بالصبر ف ظفر % 2(@)(@@) % فقلت له : ما من عزاء ولا أسى % % بمسل فؤادي عن هواها فأقصر % % 3(@)(@@) % وما من لقاء يرتجى بعد هذه % لنا ولهم دون لتفاف المجمر % % 4(@)(@@) % فهات دواء للذي بي من الجوى ، % وإلا فدعني من ملامك ، وعذر % % 5(@)(@@) % تباريح ، لا يشفي الطبيب الذي به ، % وليس يؤاتيه دواء المبشر % 6(@)(@@) % وطورين طورا يائس من يعوده % وطورا يرى في العين كالمتحير % 7(@)(@@) % صريع هوى ناءت به شاهقية % هضيم الحشا حسانة المتحسر % 8(@)(@@) % قطوف ، الوف للحجال ، غريرة ، % وثيرة ما تحت اعتقاد المؤزر % % 9(@)(@@) % سبته بوحف في العقاص مرجل ، % أثيث كقنو النخلة المتكور % % 10(@)(@@) % وخد أسيل كالوذيلة ناعم % متى يره راء يهل ويسحر % PageV01P158 11(@)(@@) % وعيني مهاة في الخميلة مطفل % مكحلة تبغي مرادا لجؤذر % 12(@)(@@) % وتبسم عن غر شتيت نباته % له أشر كالأقحوان المنور % 13(@)(@@) % وتخطو على برديتين غذاهما % % سوائل من ذي جمة متحير % % 14(@)(@@) % من البيض مكسال الضحى بحترية % ثقال متى تنهض إلى الشيء تفتر % % 15(@)(@@) % فلما عرفت البين منها وقبله % جرى سانح للعائف المتطير % 16(@)(@@) % شكوت إلى بكر وقد حال دونها % % سيف ، متى ينصب له الطرف يحسر % % 17(@)(@@) % فقلت أشر ! قال : ئتمر أنت مؤيس % ولم يكبروا فوتا ، فما شئت فأمر % % 18(@)(@@) % فقلت : انطلق نتبعهم ، إن نظرة % إليهم شفاء للفؤاد المضمر % 19(@)(@@) % فرحنا وقلنا للغلام قض حاجة % لنا ، ثم أدركنا 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms34# ، ولا تتغير % % 20(@)(@@) % سراعا نغم الطير ، إن سنحت لنا ، % وإن يلقنا الركبان لا نتحير % PageV01P159 21(@)(@@) % فلما أضاء الفجر عنا ، بدا لنا % % ذرى النخل والقصر الذي دون عزور % 22(@)(@@) % فقلت : اعتزل ذل الطريق ، فإننا % % متى نر تعرفنا العيون ، فنشهر % % 23(@)(@@) % فظلنا لدى العصلاء تلفحنا الصبا % % وظلت مطايانا بغير معصر % 24(@)(@@) % لدن غدة ، حتى تحينت منهم % رواحا ، ولان اليوم للمتهجر % 25(@)(@@) % فلما أجزنا الميل من بطن رابغ ، % بدت نارها قمرا للمتنور % % 26(@)(@@) % فقلت : اقترب من سربهم تلق غفلة % من الركب و لبس لبسة المتنكر % 27(@)(@@) % فإنك لا تعبى إليها مبلغا % وإن تلقها دون الرفاق ، فأجدر % % 28(@)(@@) % فقالت لأتراب لها : ابرزن ، إنني % % أظن أبا الخطب منا بمحضر % 29(@)(@@) % قريبا على سمت من القوم تتقى % % عيونهم من طائفين وسمر % 30(@)(@@) % له ختلجت عيني أظن عشية % وأقبل ظبي سانح كالمبشر % PageV01P160 31(@)(@@) % فقلن لها لا بل تمنيت منية % خلوت بها عند الهوى والتذكر % % 32(@)(@@) % فقالت لهن : امشين ، إما نلاقه ، % كما قلت أو نشف النفوس فنعذر % 33(@)(@@) % وجئت نسياب الأيم في الغيل أتقى ل % % عيون وأخفي الوطء للمتقفر % 34(@)(@@) % فلما لتقينا رحبت وتبسمت % % PageV01P161 البحر : طويل 1(@)(@@) % ألا ليت حظي منك أني كلما % % ذكرتك ، لقاك المليك لنا ذكرا % % 2(@)(@@) % فعالجت من وجد بنا مثل وجدنا % % بكم ، قسم عدل لا مشطا ولا هجرا % % 3(@)(@@) % لعلك تبلين الذي لك عندنا % % فتدرين يوما إن أحطت به خبرا % % 4(@)(@@) % لكي تعلمي علما يقينا ، فتنظري % % أيسرا ألاقي من طلابك أن عسرا % % 5(@)(@@) % فقالت وصدت : أنت صب متيم ، % وفيك لكل الناس مطلب عذرا % % 6(@)(@@) % ملول لمن يهواك ، مستطرف الهوى ، % أخو شهوات تبذل المذق والنزرا % % 7(@)(@@) % فقلت لها قول امرىء متجلد ، % وقد بل ماء الشأن من مقلتي نحرا : % 8(@)(@@) % سلبت هداك الله قلبي فأنعمي % % عليه ، وردي ، إذ ذهبت به قمرا % % 9(@)(@@) % وقطعت قلبي ب لمواعيد والمنى % % وغصت على قلبي ، فأوثقته أسرا % % 10(@)(@@) % فما ليلة تمضي على الناس تنجلي ، % ولم أذر فيها عبرة تخضل النحرا % % PageV01P162 11(@)(@@) % عليك ، ولم أشرق بريق ، ولم أجد % من الحب سورات على كبدي فطرا % % 12(@)(@@) % ولكن قلبي سيق للحين نحوكم % فجئت فلا يسرا لقيت ولا صبرا % % PageV01P163 البحر : طويل 1(@)(@@) % يقول عتيق إذ شكوت صبابتي % % وبين داء من فؤادي مخامر % 2(@)(@@) % أحقا 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms35# لئن دار الرباب تباعدت ، % أو نبت حبل أن قلبك طائر % 3(@)(@@) % أفق ، قد أفاق العاشقون وفارقوا ال % % هوى و ستمرت بالرجال المرائر % 4(@)(@@) % زع القلب و ستبق الحياء فإنما % % تباعد أو تدني الرباب المقادر % % 5(@)(@@) % فإن كنت علقت الرباب ، فلا تكن % % أحاديث من يبدو ومن هو حاضر % 6(@)(@@) % أمت حبها و جعل قديم وصالها % % وعشرتها أمثال من لا تعاشر % % 7(@)(@@) % وهبها كشيء لم يكن ، أو كنازح % به الدار أو من غيبته المقابر % 8(@)(@@) % فإن أنت لم تفعل ولست بفاعل % ولا قابل نصحا لمن هوا زاجر % 9(@)(@@) % فلا تفتضح عينا أتيت الذي ترى ، % وطاوعت هذا القلب إذ أنت سادر % % 10(@)(@@) % وما زلت ستنكر الناس مدخلي % % وحتى تراءتني العيون النواظر % PageV01P164 البحر : بسيط تام 1(@)(@@) % قف بالديار عفا من اهلها الأثر ، % عفى معالمها الأرواح والمطر % 2(@)(@@) % بالعرصتين فمجرى السيل بينهما % % إلى القرين ، إلى ما دونه البسر % % 3(@)(@@) % تبدو لعينيك منها كلما نظرت % معاهد الحي ، دوداة ، ومحتضر % % 4(@)(@@) % وركد حول كاب قد عكفن به % % وزينة ماثل منه ومنعفر % 5(@)(@@) % منازل الحي أقوت بعد ساكنها ، % أمست ترود بها الغزلان والبقر % % 6(@)(@@) % تبدلوا بعدها دارا وغيرها % % صرف الزمان وفي تكراره غير % 7(@)(@@) % وقفت فيها طويلا كي أسائلها % % والدار ليس لها علم ، ولاحبر % % 8(@)(@@) % دار التي قادني حين لرؤيتها ، % وقد يقود إلى الحين الفتى القدر % 9(@)(@@) % خود تضيء ظلا البيت صورتها ، % كما يضيء ظلام الحندس القمر % % 10(@)(@@) % مجدولة الخلق لم توضع مناكبها % % ملء العناق ألوف جيبها عطر % % PageV01P165 11(@)(@@) % ممكورة الساق ، مقصوم خلاخلها ، % فمشبع نشب ، منها ، ومنكسر % % 12(@)(@@) % هيفاء لفاء مصقول عوارضها % % تكاد ، من ثقل الأرداف ، تنبتر % % 13(@)(@@) % تفتر عن واضح الانياب ، متسق ، % عذب المقبل ، مصقول له أشر % % 14(@)(@@) % كالمسك شيب بذوب النحل يخلطه % % ثلج بصهباء مما عتقت جدر % 15(@)(@@) % تلك التي سلبتني العقل و متنعت % والغانيات ، وإن واصلتنا ، غدر % % 16(@)(@@) % قد كنت في معزل عنها فقيضني % % للحين ، حين دعاني للشقا النظر % % 17(@)(@@) % إني ، ومن أعمل الحجاج خيفته % % خوص المطايا وما حجوا وما اعتمروا % % 18(@)(@@) % لا أصرف الدهر ودي عنك أمنحه % أخرى أواصلها ، ما أورق الشجر ! % 19(@)(@@) % أنت لمنى وحديث النفس خالية % وفي الجميع وأنت السمع و لبصر % 20(@)(@@) % يا ليت من لامنا في الحب مر 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms36# به ، % مما نلاقي ، وإن لم نحصه ، العشر % % PageV01P166 21(@)(@@) % حتى يذوق كما ذقنا ، فيمنعه ، % مما يلذ حديث النفس والسهر % 22(@)(@@) % دست إلي رسولا لا تكن فرقا % و حذر وقيت وأمر الحازم الحذر % 23(@)(@@) % إني سمعت رجالا من ذوي رحمي % % هم العدو بظهر الغيب قد نذروا % % 24(@)(@@) % أن يقتلوك ، وقاك القتل قادره ، % والله جارك مما أجمع النفر % % 25(@)(@@) % السر يكتمه الإثنان بينهما ، % وكل سر عدا الإثنين منتشر % 26(@)(@@) % والمرء ، إن هو لم يرقب بصبوته % لمح العيون بسوء الظن يشتهر % PageV01P167 البحر : بسيط تام 1(@)(@@) % قل للمليحة : قد أبلتني الذكر ، % ف لدمع كل صباح فيك يبتدر % 2(@)(@@) % فليت قلبي وفيه من تعلقكم % ما ليس عندي له عدل ولا خطر % 3(@)(@@) % أفاق ، إذ بخلت هند ، وما بذلت % ما كنت آمله منها وأنتظر % 4(@)(@@) % وقد حذرت النوى في قرب دارهم % فعيل صبري ولم ينفعني الحذر % 5(@)(@@) % قد قلت ، إذ لم تكن للقلب ناهية % عنها تسلي ولا للقلب مزدجر % 6(@)(@@) % يا ليتني مت إذ لم ألق من كلفي % % مفرحا ، وشآني نحوها النظر % % 7(@)(@@) % وشاقني موقف بالمروتين لها ، % والشوق يحدثه للعاشق الفكر % 8(@)(@@) % وقولها لفتاة غير فاحشة : % أرائح ممسيا أم باكر عمر % 9(@)(@@) % الله جار له إما أقام بنا % % وفي الرحيل ، إذا ما ضمه السفر % % 10(@)(@@) % فجئت أمشي ولم يغف الألى سمروا % % وصاحبي هندواني به أثر % % PageV01P168 11(@)(@@) % فلم يرعها ، وقد نضت مجاسدها ، % إلا سواد ، وراء البيت ، يستتر % % 12(@)(@@) % فلطمت وجهها ، واستنبهت معها % % بيضاء آنسة من شأنها الخفر % 13(@)(@@) % ما باله حين يأتي ، أخت ، منزلنا ، % وقد رأى كثرة الأعداء ، إذ حضروا % % 14(@)(@@) % لشقوة من شقائي أخت غفلتنا % % وشؤم جدي ، وحين ساقه القدر % % 15(@)(@@) % قالت : أردت بذا عمدا فضيحتنا % % وصرم حبلي ، وتحقيق الذي ذكروا % % 16(@)(@@) % هلا دسست رسولا منك يعلمني % % ولم تعجل إلى أن يسقط القمر % % 17(@)(@@) % فقلت : داع دعا قلبي ، فأرقه ، % ولا يتابعني فيكم ، فينزجر % % 18(@)(@@) % فبت أسقى عتيق الخمر خالطه % شهد مشار ومسك خالص ذفر % 19(@)(@@) % وعنبر الهند والكافور خالطه % قرنفل ، فوق رقراق له أشر % % 20(@)(@@) % فبت ألثمها طورا ، ويمتعني ، % إذا تمايل عنه ، البرد والخصر % % PageV01P169 21(@)(@@) % حتى إذا الليل ولى ، قالتا زمرا : % قوما بعيشكما قد نور السحر % 22(@)(@@) % فقمت أمشي وقامت وهي فاترة % كشارب الخمر بطى 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms37# مشيه السكر % 23(@)(@@) % يسحبن خلفي ذيول الخز آونة % وناعم العصب كيلا يعرف الأثر % % PageV01P170 البحر : متقارب تام 1(@)(@@) % بنفسي من شفني حبه % ومن حبه باطن ظاهر % 2(@)(@@) % ومن لست أصبر عن ذكره % ولا هو عن ذكرنا صابر % 3(@)(@@) % ومن إن ذكرنا جرى دمعه ، % ودمعي لذكري له مائر % % 4(@)(@@) % ومن اعرف الود في وجهه ، % ويعرف ودي له الناظر % PageV01P171 البحر : بسيط تام 1(@)(@@) % يا صاحبي ، أقلا اللوم ، واحتسبا % % في مستهام رماه الشوق بالذكر % 2(@)(@@) % ببيضة كمهاة الرمل ، آنسة ، % مفتانة الدل ، ريا الخلق كالقمر % 3(@)(@@) % سيفانة ، فنق ، جم مرافقها ، % مثل المهاة تراعي ناعم الزهر % 4(@)(@@) % ممكورة الساق ، غرثان موشحها ، % حسانة الجيد واللبات والشعر % 5(@)(@@) % لو دب ذر رويدا فوق قرقرها ، % لأثر الذر فوق الثوب في البشر % % 6(@)(@@) % قالت قريبة لما طال بي سقمي % % وأنكرت بي انتقاص السمع والبصر : % 7(@)(@@) % يا ليتني أفتدي ما قد تهيم به % ببعض لحمي وبعض النقص عن عمري % % 8(@)(@@) % قد يعلق القلب حبا ، ثم يتركه % خوف المقال وخوف الكاشح الأشر % 9(@)(@@) % دع حبها ، وتناس الحب تلق به ، % واصبر ، وكن كصريع قام من سكر % % 10(@)(@@) % فقلت قولا مصيبا غير ذي خطل % أتى به حبها في فطنة الفكر % PageV01P172 11(@)(@@) % سمعي وط في حليفاها على جسدي ، % فكيف أصبر عن سمعي وعن بصري % % 12(@)(@@) % لو تابعاني ، على أن لا اكلمها ، % إذا لقضيت من أوطارها وطري % % 13(@)(@@) % دل الفؤاد عليها بعض نسوتها ، % ونظرة عرضت كانت من القدر % 14(@)(@@) % وقول بكر : ألم تلمم لنسألهم ، % وانظر ، فلا بأس بالتسليم والنظر % % 15(@)(@@) % لا انس موقفها وهنا وموقفنا ، % وتربها بترابانا على خطر % % 16(@)(@@) % وقولها ، ودموع العين تسبقها % % في نحرها : دين هذا القلب من عمر % PageV01P173 البحر : بسيط تام 1(@)(@@) % يا صاحبي ، قفا نستخبر الدارا ، % أقوت فهاجت لنا ب لنعف تذكارا % % 2(@)(@@) % تبدل الربع ممن كان يسكنه ، % أدم الظباء به يمشين أسطارا % % 3(@)(@@) % وقد أرى مرة سربا به حسنا % مثل الجآذر أثيابا وأبكارا % % 4(@)(@@) % فيهن هند ، وهند لا شبيه لها ، % ممن أقام من الجيران أو سارا % % 5(@)(@@) % هيفاء مقبلة عجزاء مدبرة % تخالها في ثياب العصب دينارا % % 6(@)(@@) % تفتر عن ذي غروب ، طعمه ضرب ، % تخاله بردا من مزنة مارا % % 7(@)(@@) % كأن عقد وشاحيها على رشإ % يقرو من الروض روض الحزن 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms38# أثمارا % % 8(@)(@@) % قامت تهادى وأتراب لها معها % % هونا تدافع سيل الزل إذ مارا % % 9(@)(@@) % يممن مورقة الأفنان ، دانية ، % وفي الخلاء ، فما يؤنسن ديارا % % 10(@)(@@) % قالت : لو ان أبا الخطاب وافقنا ، % فنلهو اليوم ، أو تنشدن أشعارا % % PageV01P174 11(@)(@@) % فلم يرعهن إلا العيس طالعة ، % يحملن بالنعف ركابا وأكوارا % % 12(@)(@@) % وفارس معه البازي ، فقلن لها : % ها هم أولاء وما أكثرن إكثارا % % 13(@)(@@) % لما وقفنا وغيبنا ركائبنا % % بدلن بالعرف بعد الرجع إنكارا % % 14(@)(@@) % قلن : انزلوا نعمت دار بقربكم ، % أهلا وسهلا ، من زائر زارا % % 15(@)(@@) % لما ألمت باصحابي وقد هجعوا ، % حسبت وسط رجال القوم عطارا % % 16(@)(@@) % من طيب نشر التي نامتك إذ طرقت % ونفحة المسك والكافور إذ ثارا % % 17(@)(@@) % فقلت : من ذا المحيي ؟ وانتبهت له ، % أم من محدثنا هذا الذي زارا ؟ % 18(@)(@@) % قالت : محب رماه الحب آونة ، % وهيجته دواعي الحب إذ حارا % % 19(@)(@@) % حلي إزارك سكنى غير صاغرة % إن شئت و جزي محبا ب لذي سارا % % 20(@)(@@) % فقد تجشمت من طول السرى تعبا % وفي الزيارة قد أبلغت أعذارا % % PageV01P175 21(@)(@@) % إن الكواكب لا يشبهن صورتها ، % وهن أسوأ منها ، بعد ، أخبارا % % PageV01P176 البحر : بسيط تام 1(@)(@@) % ألمم بعفراء إن أصحابك ابتكروا ، % وسلهم هل لديها اليوم منتظر % 2(@)(@@) % واها لعفراء ، إن دار بها قربت ، % فما أبالي ألام الناس أم عذروا % % 3(@)(@@) % وإن تبن غربة عنا بها قذف % فما تقضى الهوى منا ، ولا الوطر % % 4(@)(@@) % خود مفهفهة الأعلى ، إذا انصرفت ، % تكاد من ثقل الأرداف تنبتر % % 5(@)(@@) % تفتر عن ذي غروب طعمه عسل ، % مفلج النبت رفاف له أشر % 6(@)(@@) % كأن فاها ، إذا ما جئت طارقها ، % خمر ببيسان أوما عتقت جدر % 7(@)(@@) % شجت بماء سحاب زل عن رصف % من ماء أزهر لم يخلط به كدر % 8(@)(@@) % والعنبر الاكلف المسحوق خالطه ، % والزنجبيل ، ورند هاجه السحر % % 9(@)(@@) % حوراء ممكورة الساقين بهكنة % لا عيب في خلقها طول ولا قصر % % 10(@)(@@) % كأنها الشمس وافت يوم أسعدها ، % أو درة شوفت للبيع أو قمر % PageV01P177 11(@)(@@) % تقول إذ أيقنت أني مفارقها : % يا ليتني مت قبل اليوم يا عمر % PageV01P178 البحر : بسيط تام 1(@)(@@) % يا ليتني قد أجزت الحبل نحوكم % حبل المعرف ، أو جاوزت ذا عشر % 2(@)(@@) % إن الثواء بأرض لا أراك بها % % ف ستيقنيه ثواء حق ذي كدر 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms39# % 3(@)(@@) % وما مللت ولكن زاد حبكم % وما ذكرتك ، إلا ظلت كالسدر % 4(@)(@@) % أذري الدموع كذي سقم يخامره ، % وما يخامر من سقم سوى الذكر % 5(@)(@@) % كم قد ذكرتك لو أجزى بذكركم % يا أشبه الناس كل الناس بالقمر % 6(@)(@@) % إني لأجذل إن أمشي مقابله % حبا لرؤية من أشبهت في الصور % 7(@)(@@) % وما جذلت لشيء كان بعدكم ، % ولا منحت سواك الحب من بشر % % PageV01P179 البحر : كامل تام 1(@)(@@) % لمن الديار كأنهن سطور ، % تسدي معالمها الصبا وتنير % 2(@)(@@) % لعبت بها الأرواح بعد أنيسها % % نكباء تطرد السفا ودبور % 3(@)(@@) % دار لهند إذ تهيم بذكرها % % واذ الشباب المستعار نضير % % 4(@)(@@) % إذ تستبيك بجيد آدم شادن ، % در على لباته ، وشذور % % 5(@)(@@) % تلك لتي سبت الفؤاد فأصبحت % و لقلب رهن عندها مأسور % 6(@)(@@) % لو دب ذر فوق ضاحي جلدها ، % لأبان من آثارهن حدور % 7(@)(@@) % غراء واضحة الجبين كأنها % % قمر بدا للناظرين منير % 8(@)(@@) % جم العظام لطيفة أحشاؤها % % والمسك ، من أردانها ، منشور % % 9(@)(@@) % تفتر عن مثل الأقاحي شافها % % هزم أجش من السماك مطير % 10(@)(@@) % وله أثيث كالكروم مذيل % حسن الغدائر حالك مضفور % PageV01P180 11(@)(@@) % ومخضب رخص البنان كأنه % عنم ومنتفخ النطاق وثير % % 12(@)(@@) % قالت : ودمع العين يجري واكفا % كالدر يسبل تارة ويغور : % 13(@)(@@) % ب لله زرنا إن أردت وصالنا % % وآحذر أناسا كلهم مأمور % 14(@)(@@) % أن يأخذوك فكن فتى ذا فطنة % إن الكريم لدى الحذار صبور % % PageV01P181 البحر : طويل 1(@)(@@) % يقولون لي : أقصر ، ولست بمقصر ، % وحبك يا سكن الذي يحسم الصبرا % % 2(@)(@@) % على الهائم المشغوف بالوصل ما دعا % % حمام على أفنان دوحته وترا % % 3(@)(@@) % ثلاث حمامات وقوع إذا دعا % % رددن إليه الحزن إذ هيج الهدرا % % 4(@)(@@) % بصوت حزين مثكل متوجع % ونفس مريض القلب أورثنه ذكرا % % 5(@)(@@) % بكل كعاب طفلة غير حمشة % وتمشي الهوينا ما تجاوزه فترا % % 6(@)(@@) % وظلت تهادى ثم تمشي تأودا % وتشكو مرارا من قوائمها فترا % % 7(@)(@@) % إذا ما دعت بالمرط كيما تلفه % على الخصر ، أبدت من روادفها فخرا % % 8(@)(@@) % لعمري لقد كان الفؤاد مسلما % صحيحا فأمسى لا يطيق لها هجرا % % 9(@)(@@) % فجازي ودودا كان قبلك في الهوى % % دؤولا ، فقد اورثته السقم والأسرا % % 10(@)(@@) % أفي الحق ، إذ حكمتم ، فحكمتم % صوابا ، فما أخطأتم الظلم والكفرا ؟ % PageV01P182 البحر : كامل تام 1(@)(@@) % أأقام أمس خليطنا أم 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms40# سارا ؟ % سائل بعمرك أي ذاك ختارا ؟ % 2(@)(@@) % وإخال أن نواهم قذافة ، % كانت معاودة الفراق مرارا % % 3(@)(@@) % قال الرسول ، وقد تحدر واكف ، % فكففت منه مسبلا مدرارا : % 4(@)(@@) % أن سر فشيعنا وليس بنازع % لو شد فوق مطيه الأكوارا % % 5(@)(@@) % في حاجة جهد الصبابة قادها % % وبما يوافق للهوى الأقدارا % % 6(@)(@@) % قامت تراءى ب لصفاح كأنما % % عمدا تريد لنا بذاك ضرارا % % 7(@)(@@) % فبدت ترائب من ربيب شادن ، % ذكر المقيل إلى الكناس فصارا % % 8(@)(@@) % وجلت عشية بطن مكة إذ بدت ، % وجها يضيء بياضه الأستارا % % 9(@)(@@) % ك لشمس تعجب من رأى ويزينها % % حسب أغر ، إذا تريد فخارا % % 10(@)(@@) % سقيت بوجهك كل أرض جئتها ، % وبمثل وجهك نستقي الامطارا % % PageV01P183 11(@)(@@) % لو يبصر الثقف البصير جبينها % % وصفاء خديها العتيق لحارا % % 12(@)(@@) % وأرى جمالك فوق كل جميلة ، % وجمال وجهك يخطف الأبصارا % % 13(@)(@@) % إني رايتك غادة خمصانة ، % ريا الروادف لذة مبشارا % % 14(@)(@@) % محطوطة المتنين أكمل خلقها % % مثل السبيكة بضة معطارا % % 15(@)(@@) % تشفي الضجيع ببارد ذي رونق % لو كان في غلس الظلام ، أنارا % % 16(@)(@@) % فسقتك بشرة عنبرا وقرنفلا % والزنجبيل ، وخلط ذاك ، عقارا % % 17(@)(@@) % والذوب من عسل الشراة ، كأنما % % غصب الأمير تبيعه المشتارا % % 18(@)(@@) % وكأن نطفة بارد وطبرزدا % ومدامة قد عتقت أعصارا % % 19(@)(@@) % تجري على أنياب بشرة كلما % % طرفت ولا تدري بذاك غرارا % % 20(@)(@@) % يروى به الظمآن ، حين يشوفه % % لذ المقبل ، باردا ، مخمارا % % PageV01P184 21(@)(@@) % ويفوز من هي في الشتاء شعاره ، % أكرم بها دون اللحاف شعارا % % 22(@)(@@) % جودي لمحزون ذهبت بعقله ، % لم يقض منك بشيرة الأوطارا % % 23(@)(@@) % وإذا ذهبت أسوم قلبي خطة % من هجرها ألفيته خوارا % % 24(@)(@@) % واغرورقت عيناي حين أسومها % % والقلب هاج لذكرها استعبارا % % 25(@)(@@) % فبتلك اهذي ما حييت صبابة ، % وبها ، الغداة ، أشبب الأشعارا % % 26(@)(@@) % من ذا يواصل إن صرمت حبالنا % % أم من نحدث بعدك الأسرارا % % 27(@)(@@) % هيهات منك قعيقعان وأهلها % % بالحزنتين ، فشط ذاك مزارا ! % PageV01P185 البحر : كامل تام 1(@)(@@) % نعم الفؤاد مزارها محظور % بعد الصفاء ، وبيتها مهجور % 2(@)(@@) % لج البعاد بها وشط بركبها % % نائي المحل عن الصديق غيور % 3(@)(@@) % حذر قليل النوم ذو قاذورة % فطن ، بألباب الرجال بصير % % 4(@)(@@) % لم ينسني ما قد لقيت ونأيها % % عني وأشغال عدت وأمور % 5(@)(@@) % ممشى وليدتها إلي ، وقد دنا % % من فرقتي يوم الفراق بكور % 6(@)(@@) % ومفيض عبرتها ومومى كفها 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms41# % % ورداء عصب بيننا منشور % 7(@)(@@) % أن أرج رحلتك الغداة إلى غد ، % وثواء يوم ، إن ثويت ، يسير % % 8(@)(@@) % لما رآني صاحباي كأنني % % تبل بها أو موزع مقمور % 9(@)(@@) % وتبينا أن الثواء لبانة % مني ، وحبسهما علي كبير % % 10(@)(@@) % قالا : أنقعد أن نروح ؟ وما تشأ % % نفعل وأنت بأن تطاع جدير % PageV01P186 11(@)(@@) % إن كنت ترجو أن تلاقي حاجة ، % ف مكث فأنت على الثواء أمير % 12(@)(@@) % فأتيتها و لليل أدهم مرسل % وعليه من سدف الظلام ستور % 13(@)(@@) % رحبت حين لقيتها ، فتبسمت ، % وكذاكم ما يفعل المحبور % 14(@)(@@) % وتضوع المسك الذكي وعنبر % من جيبها ، قد شابه كافور % % 15(@)(@@) % كنا كمثل الخمر ، كان مزاجها % % بالماء لا رنق ، ولا تكدير % % 16(@)(@@) % فلئن تغير ما عهدت وأصبحت % صدفت ، فلا بذل ، ولا ميسور % % 17(@)(@@) % لبما تساعف باللقاء ولبها % % فرح بقرب مزارنا ، مسرور % % 18(@)(@@) % إذ لا تغيرها الوشاة ، فودها % % صاف نراسل مرة وتزور % 19(@)(@@) % لا تأمنن الدهر أنثى بعدها ، % إني لآمن غدرهن نذير % 20(@)(@@) % بعد التي أعطتك من أيمانها % % ما لا يطيق من العهود ثبير % PageV01P187 21(@)(@@) % فإذا وذلك كان ظل سحابة % نفحت به في المعصرات دبور % PageV01P188 البحر : متقارب تام 1(@)(@@) % أمن آل زينب جد البكور % نعم فلأي هواها تصير ؟ % 2(@)(@@) % أللغور أم أنجدت دارها % % وكانت قديما بعهدي تغور % % 3(@)(@@) % هي الشمس تسري على بغلة ، % وما خلت شمسا بليل تسير % % 4(@)(@@) % وما أنس من قولها ، % غداة منى إذ أجد المسير : % 5(@)(@@) % ألم تر أنك مستشرف ، % وأن عدوك حولي كثير ؟ % 6(@)(@@) % فإن جئت ، فأت على بغلة ، % فليس يؤاتي الخفاء البعير % 7(@)(@@) % فإنك عندي ، فيما اشتهيت ، % ت حتى تفارق رحلي أمير % 8(@)(@@) % نظرت بخيف منى نظرة % إليها فكاد فؤادي يطير % PageV01P189 البحر : خفيف تام 1(@)(@@) % أبهجر يودع الأجوار % أم مساء أم قصر ذاك بتكار ؟ % 2(@)(@@) % قربتني إلى قريبة عيني % % يوم ذي الثري ، والهوى المستعار % % 3(@)(@@) % ودواعي الهوى ، وقلب ، إذا % % لج ، لجوج ، فما يكاد ، يصار % % 4(@)(@@) % قمرته فؤاده أخت رئم % ذات دل خريدة معطار % 5(@)(@@) % طفلة ، وعثة الروادف ، خود ، % كمهاة انساب عنها الصوار % % 6(@)(@@) % حرة الخد خدلة الساق مهضو % % مهضومة كشح يضيق عنها الشعار % % 7(@)(@@) % نظرت حين وازن الركب بالنخ % ل ظلاما ودونها الأستار % 8(@)(@@) % ودعاني ما قال فيها عتيق % وهو ب لحسن عالم بيطار % 9(@)(@@) % قول نسوانها إذا 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms42# حفل النس % في مجلس ، وقل الإمار % % 10(@)(@@) % أنها عفة عن الخلق لوا % % والطعمة التي هي عار % % PageV01P190 11(@)(@@) % نعتوها فأحسنوا النعت حتى % % كدت من حسن نعتها أستطار % 12(@)(@@) % فثنائي عليك خير ثناء ، % إن تقربت ، أو نأت بك دار % 13(@)(@@) % وبك الهم ، إن مشيت صحيحا ، % وسواري الأحلام ، والأشعار % % 14(@)(@@) % أنتم همنا وكبر منانا % % وأحاديثنا وإن لم تزاروا % % 15(@)(@@) % وأرى اليوم ، إن نأيت ، طويلا ، % والليالي إذا دنوت قصار % 16(@)(@@) % لم يقارب جمالها حسن شيء % غير شمس الضحى عليها النهار % 17(@)(@@) % فلو أني خشيت أو خفت قتلا % غير أن ليس تدفع الأقدار % % 18(@)(@@) % لاتقيت التي بها يفتن الناس ، % ولكن لكل شيء قدار % % 19(@)(@@) % فلنفسي أحق ب للوم عمدا % حيث ما كنت يوم لف الجمار % % PageV01P191 البحر : خفيف تام 1(@)(@@) % ما شجاك الغداة من رسم دار % دارس الربع مثل وحي السطار % 2(@)(@@) % بدل الربع بعد نعم نعاما % وظباء يخدن كالأمهار % % 3(@)(@@) % عجت فيه وقلت للركب عوجوا % % فثنى الركب كل حرف خيار % % 4(@)(@@) % ثم قالوا : اربعن عليك وقض ل % يوم بعض الهموم والأوطار % 5(@)(@@) % عز شيء أن يقضي اليوم حاجا % بوقوف منا على الأكوار % 6(@)(@@) % إن تكن دار آل نعم قواء % خاليا جوها من الأجوار % % 7(@)(@@) % فلقدما رأيت فيها مهاة ، % في جوار أوانس أبكار % 8(@)(@@) % ذكرتني الديار نعما وأترا % % با حسانا نواعما كالصوار % 9(@)(@@) % آنسات مثل التماثيل ، لعسا ، % مع خود خريدة معطار % % 10(@)(@@) % ومقاما قد أقمته مع نعم % وحديثا مثل الجنى المشتار % PageV01P192 11(@)(@@) % نتقي العين تحت عين سجوم % وبلها في دجى الدجنة ساري % % 12(@)(@@) % و كتننا بردين من جيد العص % ب معا ، بين مطرف ، وشعار % % 13(@)(@@) % بت في نعمة وبات وسادي % % معصما بين دملج وسوار % % 14(@)(@@) % ثم إن الصباح لاح ولاحت % أنجم الصبح مثل جزع العذاري % % 15(@)(@@) % فنهضنا نمشي نعفي مروطا % وبرودا ، وهنا ، على الآثار % % 16(@)(@@) % وتولى نواعم خفرات % يتهادين ك لظباء السواري % % 17(@)(@@) % مثقلات ، يزجين بدر سعود ، % وهي في الصبح مثل شمس النهار % % PageV01P193 البحر : وافر تام 1(@)(@@) % تقول وعينها تذري دموعا % لها نسق على الخدين تجري : % 2(@)(@@) % ألست أقر من يمشي لعيني ، % وأنت لهم في الدنيا وذكري % % 3(@)(@@) % اما لك حاجة فيما لدينا ، % تكن لك عندنا حقا ، فأدري % % 4(@)(@@) % أمن سخط علي صددت عني % % حملت جنازتي وشهدت 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms43# قبري % % 5(@)(@@) % أشهرا كله إلا ثلاثا % أقمت على مصارمتي وهجري ! % PageV01P194 البحر : خفيف تام 1(@)(@@) % كتبت تعتب الرباب وقالت : % قد أتانا ما قلت في الأشعار % 2(@)(@@) % سادرا عامدا تشهر ب سمي % % كي يبوح الوشاة بالأسرار % 3(@)(@@) % فاعتزلنا ، فلن نجدد وصلا ، % ما أضاءت نجوم ليل لسار % 4(@)(@@) % قلت لا تصرمي لتكثير واش % كاذب ، في الحديث والأخبار % % 5(@)(@@) % لم نبح عنده بسر ، ولكن % كذب ما أتاك والجبار % 6(@)(@@) % لا تطيعي ، فإنني لم أطعه ، % أنت أهوى الأحباب والأجوار % % PageV01P195 البحر : خفيف تام 1(@)(@@) % نام صحبي ، وبات نومي عسيرا ، % أرقب النجم موهنا أن يغورا % % 2(@)(@@) % إذ تذكرت قول هند لتربيها ، % ورحنا نيمم التجميرا % % 3(@)(@@) % قلن بالله للفتى عج قليلا % ليس أن عجت للعتاب كثيرا % % 4(@)(@@) % ف لتقينا فرحبت ثم قالت : % حلت عن عهدنا وكنت جديرا % % 5(@)(@@) % أن ترد الواشين عني ، كما أعصي ، % إذا ما ذكرت عندي ، أميرا % % 6(@)(@@) % قلت : أنت المنى وكبر هوانا % % ف عذري يا خليلتي معذورا % % 7(@)(@@) % وتذكرت قولها لي ، لدى الميل ، % ل وكفت دموعها أن تمورا % % 8(@)(@@) % أسأل الله عالم الغيب أن تر % جع يا حب سالما مأجورا % % 9(@)(@@) % إن تكن ليلتي بنعمان طالت % فبما قد يكون ليلي قصيرا % % 10(@)(@@) % يا خليلي لا تقيما ببصرى % % وحفير فما أحب حفيرا % % PageV01P196 11(@)(@@) % فإذا ما مررتما بعمان ، % فأقلا بها الثواء وسيرا % % 12(@)(@@) % يا خليلي هجرا تهجيرا % ثم روحا وأحكما لي المسيرا % % 13(@)(@@) % يا خليلي ما تشيران إني % % فاعل ما امرتما ، فأشيرا % % 14(@)(@@) % ضربا الأمر ياعة ، ثم قالا : % قد رضيناك ما صطحبنا أميرا % % 15(@)(@@) % إن خطبا علي حقا يسيرا % % أن أرى منكما بعيرا حسيرا % % 16(@)(@@) % إنما قصرنا وإن حسر السي % بعيرا ، أن نستجد بعيرا % % PageV01P197 البحر : خفيف تام 1(@)(@@) % راح صحبي ولم أحي النوارا % % وقليل لو عرجوا أن تزارا % % 2(@)(@@) % ثم إما يسرون من آخر اللي % ل وإما يعجلون بتكارا % % 3(@)(@@) % ولقد قلت ليلة البين إذ جد % رحيل وخفت أن أستطارا % % 4(@)(@@) % لخليل يهوى هوانا مؤات ، % كان لي عند مثلها نظارا % % 5(@)(@@) % يا خليل اربعن علي وعينا % % من الحزن تهملان ابتدارا % % 6(@)(@@) % ههنا ف حبس البعيرين و حذر % زائدات العيون أن تستنارا % % 7(@)(@@) % إنني زائر قريبة قد يع % % لم ربي أن لا أطيق صطبارا % % 8(@)(@@) % قال : ف فعل لا 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms44# يمنعنك مكاني % % من حديث تقضي به الاوطارا % % 9(@)(@@) % والتمس ناصحا قريبا من الورد ، % د يحس الحديث والأخبارا % % 10(@)(@@) % فبعثنا مجربا ساكن الري % % خفيفا ، معاودا ، بيطارا % % PageV01P198 11(@)(@@) % فأتاها فقال : ميعادك السر % ح إذا الليل سدل الأستارا % % 12(@)(@@) % فكمنا حتى إذا فقد الصو % ت دجى المظلم البهيم فحارا % % 13(@)(@@) % قلت ، لما بدت لصحبي : إني % % أرتجي عندها لديني يسارا % % 14(@)(@@) % ثم أقبلت رافع الذيل أخفي ل % الوطء ، أخشى العيون والنظارا % % 15(@)(@@) % ف لتقينا فرحبت حين سلم % ت وكفت دمعا من العين مارا % % 16(@)(@@) % ثم قالت عند العتاب : رأينا % % منك عنا تجلدا وازورارا % % 17(@)(@@) % قلت : كلا لاه بن عمك بل خف % نا أمورا كنا بها أغمارا % % 18(@)(@@) % فجعلنا الصدود لما رأينا % % قالة الناس بيننا أستارا % % 19(@)(@@) % وركبنا حالا ، لنكذب عنا % % قول من كان بالبنان أشارا % % 20(@)(@@) % و قتصرت الحديث دون الذي قد % كان من قبل يعلم الأسرارا % % PageV01P199 21(@)(@@) % ليس كالعهد إذ عهدت ، ولكن % % أوقد الناس بالأحاديث نارا % % 22(@)(@@) % فلذاك الإعراض عنك ، وما % % آثر قلبي عليك أخرى اختيارا % % 23(@)(@@) % ما أبالي ، إذا النوى قربتكم % فدنوتم ، من حل ، أو كان سارا % % 24(@)(@@) % و لليالي إذا نأيت طوال % وأراها إذا دنوت قصارا % % 25(@)(@@) % فعرفت القبول منها لعذري ، % إذ رأتني منها أريد عتذارا % % 26(@)(@@) % ثم لانت ، وسامحت بعد منع ، % وأرتني كفا تزين السوارا % % 27(@)(@@) % فتناولتها ، فمالت كغصن ، % حركته ريح عليه فحارا % % 28(@)(@@) % وأذاقت بعد العلاج لذيذا % كجنى النحل شاب صرفا عقارا % % 29(@)(@@) % ثم كانت دون اللحاف لمشغو % % ف معنى بها مشوق شعارا % % 30(@)(@@) % واشتكت شدة الإزار من ال % % بهر وألقت عنها لدي الخمارا % % PageV01P200 31(@)(@@) % حبذا رجعها إليها يديها % % في يدي درعها تحل الإزارا % % 32(@)(@@) % ثم قالت ، وبان ضوء ، من الصب % % ح منير للناظرين أنارا % % 33(@)(@@) % يا ابن عمي ، فدتك نفسي ، إني % % أتقي كاشحا ، إذا قال ، جارا % % PageV01P201 البحر : كامل تام 1(@)(@@) % لمن الديار رسومها قفر ، % لعبت بها الأرواح والقطر % 2(@)(@@) % وخلا لها من بعد ساكنها % % حجج خلون ثمان أو عشر % 3(@)(@@) % لأسيلة الخدين ، واضحة ، % يعشى بسنة وجهها البدر % 4(@)(@@) % درم مرافقها ، ومئزرها % % لا عاجز تفل ولا صفر % % 5(@)(@@) % والزعفران على ترائبها % % شرق به اللبات والنحر % % 6(@)(@@) % وزبرجد ومن الجمان به % سلس النظام ، كأنه جمر % % 7(@)(@@) % وبدائد المزجان في قرن ، % والدر ، والياقوت 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms45# ، والشذر % % PageV01P202 البحر : منسرح 1(@)(@@) % هل عند رسم برامة خبر ؟ % أم لا ، فأي الأشياء تنتظر ؟ % 2(@)(@@) % وقفت في رسمها أسائله % والدمع مثل الجمان منحدر % 3(@)(@@) % لا يرجع الرسم بالبيان ، وهل % % يفقه رجعاه حين يندثر ؟ % 4(@)(@@) % قد ذكرتني الديار إذ درست % و لشوق مما تهيجه الذكر % 5(@)(@@) % لا أنس ، طول الحياة ما بقيت % بطيبة روضة لها شجر % % 6(@)(@@) % ممشى رسول إلي يخبرني % % عنهم ، عشيا ، ببعض ما ائتمروا % % 7(@)(@@) % أو مجلس النسوة الثلاث لدى ل % الخيمات ، حتى تبلج السحر % % 8(@)(@@) % ثم انطلقنا ، وعندنا ، ولنا % % فيهن ، لو طال ليلنا ، وطر % % 9(@)(@@) % فيهن هند ، والهم ذكرتها ، % تلك التي لا يرى لها خطر % 10(@)(@@) % قباء ، إن أقبلت ، مبتلة ، % والبوص منها كالقور منعفر % % PageV01P203 11(@)(@@) % غراء في غرة الشباب من الح % % ور اللواتي يزينها خفر % 12(@)(@@) % تفتر عن واضح ، مقبله % مفلج ، واضح ، له أشر % 13(@)(@@) % وقولها للفتاة ، إذ أفد البين : % أغاد ، أم رائح عمر ؟ % 14(@)(@@) % عجلان لم يقض بعد حاجته ، % ألا تأنى يوما فينتظر ؟ % 15(@)(@@) % الله جار له إذا نزحت % دار به ، أو بدا له سفر % % 16(@)(@@) % رأيتها مرة ونسوتها ، % كأنها من شعاعها القمر % % 17(@)(@@) % يمشين في الخز والمراجل أن % % يعرف آثارهن مقتفر % 18(@)(@@) % يدنين من خشية العيون على % % مثل المصابيح زانها الخمر % PageV01P204 البحر : كامل تام 1(@)(@@) % أعرفت يوم لوى سويقة دارا ، % هاجت عليك رسومها ستعبارا % % 2(@)(@@) % وذكرت هندا ، فاشتكيت صبابة ، % لولا تكفكف دمع عينك مارا % % 3(@)(@@) % وذكرتها حوراء ، لينة المطا ، % مثل المهاة خريدة معطارا % % 4(@)(@@) % وإذا تنازعك الحديث تظرفت % انف الحديث ، ولم ترد إكثارا % % 5(@)(@@) % وإذا نظرت إلى مناكب حسنها ، % كملت وزدت بحسنها ستهتارا % % 6(@)(@@) % إن العواذل قد بكرن يلمنني % % وحسبت أكثر لومهن ضرارا % % 7(@)(@@) % وزعمن أن وصال عبدة عائد % عارا علي ، وليس ذلك عارا % % 8(@)(@@) % والنفس يمنعها الحياء فترعوي ، % وتكاد تغلبني إليك مرارا % % 9(@)(@@) % ما يذكر اسمك في حديث عارض ، % إلا استخف له الفؤاد ، فطارا % % 10(@)(@@) % هل في هوى رجل جناح ، زائر % جهرا ، أحب خريدة معطارا % % PageV01P205 11(@)(@@) % أسف عليك ، يهيم حين قتلته ، % وسلبته لب الفؤاد جهارا % % PageV01P206 البحر : منسرح 1(@)(@@) % يا من لقلب متيم ، كلف ، % يهذي بخود مريضة النظر % 2(@)(@@) % تمشي الهوينا إذا مشت فضلا % وهي كمثل العسلوج في الشجر % 3(@)(@@) % ما إن طمعنا بها ، ولا طمعت ، % حتى التقينا 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms46# ليلا على قدر % 4(@)(@@) % ما زال طرفي يحار ، إذ نظرت ، % حتى رأيت النقصان في بصري % % 5(@)(@@) % أبصرتها ليلة ونسوتها ، % يمشين بين المقام والحجر % % 6(@)(@@) % بيضا حسانا ، خرائدا ، قطفا ، % يمشين هونا كمشية البقر % % 7(@)(@@) % قد فزن ب لحسن والجمال معا % وفزن رسلا ب لدال والخفر % 8(@)(@@) % ينصتن يوما لها ، إذانظقت ، % كيما يفضلنها على البشر % % 9(@)(@@) % قالت لترب لها ملاطفة : % لنفسدن الطواف في عمر % 10(@)(@@) % قالت : تصدي له ليبصرنا % % ثم غمزيه يا أخت في خفر % PageV01P207 11(@)(@@) % قالت لها : قد غمزته ، فأبى ، % ثم أسبطرت تسعى على أثري % % 12(@)(@@) % من يسق بعد المنام ريقتها % % يسق بمسك ، وبارد خصر % % 13(@)(@@) % حوراء ممكورة محببة % عسراء للشكل عند مجتمر % PageV01P208 البحر : منسرح 1(@)(@@) % قد هاج حزني ، وعادني ذكري ، % يوم لتقينا عشية النفر % % 2(@)(@@) % بالفج من نحو دار عقبة ، والح % % ج سريع الطواف والصدر % % 3(@)(@@) % إذ كدت لولا الحيا يورعني % % أبدي الذي قد كتمت ، بالنظر % 4(@)(@@) % كأن ثوبا ، لما التقى الرك % % ب ، تدنيه عليها ، يشف عن قمر % % 5(@)(@@) % تلين ، حتى يقول : قد خدعت ! % من لم يكن ب لنساء ذا خبر % 6(@)(@@) % حتى إذا ما التمست غرتها ، % يوم لتقينا عشية النفر % % PageV01P209 البحر : متقارب تام 1(@)(@@) % لمن طلل موحش أقفرا % % فأصبح معروفه منكرا % % 2(@)(@@) % ولو أنه يستطيع لجوا % % لأخبر ، إن سيل أن يخبرا % % 3(@)(@@) % ولكنه غيرته الصبا ، % فأمست معالمه دثرا % % 4(@)(@@) % وكل مسف له هيدب ، % إذا ما حدا رعده أمطرا % % 5(@)(@@) % وقد كنت ألقى به شادنا % قطوف الخطى ناعما أحورا % % 6(@)(@@) % أسيل المحيا هضيم الحشا % % كشمس الضحى واضحا أزهرا % % 7(@)(@@) % أقول لمن لام في حبها : % أرى لك في الرأي أن تقصرا % % 8(@)(@@) % فلست مطاعا فلا تلحني % % وليست بأهل لأن تهجرا % % 9(@)(@@) % فكم من اخ لام في حبها ، % فأقصر من قبل أن أقصرا % % PageV01P210 البحر : رمل تام 1(@)(@@) % آذنت هند ببين مبتكر % وحذرت البين منها ، فاستمر % 2(@)(@@) % أرسلت هند إلينا ناصحا % بيننا : إيت حبيبا قد حضر % 3(@)(@@) % فاعلمن أن محبا زائر ، % حين تخفى العين عنه والبصر % 4(@)(@@) % قلت : أهلا بكم من زائر % أورث القلب عناء وذكر % 5(@)(@@) % فتأهبت لها ، في خفية ، % حين مال الليل واجتن القمر % % 6(@)(@@) % بينما أنظرها في مجلس ، % إذ رماني الليل منها بسكر % 7(@)(@@) % لم يرعني بعد أخذي هجعة % % غير ريح المسك 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms47# منها والقطر % 8(@)(@@) % قلت : من هذا ؟ فقالت : هكذا % % أنا من جشمته طول السهر % 9(@)(@@) % ما أنا والحب قد أبلغني % % كان هذا بقضاء وقدر % 10(@)(@@) % ليت أني لم أكن علقتكم % كل يوم أنا منكم في عبر % % PageV01P211 11(@)(@@) % كلما توعدني ، تخلفني ، % ثم تأتي حين تأتي بعذر % 12(@)(@@) % سخنت عيني لئن عدت لها % % لتمدن بحبل منبتر % % 13(@)(@@) % عمرك لله أما ترحمني % % أم لنا قلبك أقسى من حجر % 14(@)(@@) % قلت ، لما فرغت من قولها ، % ودموعي كالجمان المنحدر : % 15(@)(@@) % أنت ، يا قرة عيني ، فاعلمي ، % عند نفسي عدل سمعي وبصر % 16(@)(@@) % فاتركي عنك ملامي ، واعذري ، % و تركي قول أخي الإفك الأشر % 17(@)(@@) % فأذاقتني لذيذا خلته % ذوب نحل شيب بالماء الخصر % 18(@)(@@) % ومدام عتقت في بابل % مثل عين الديك أو خمر جدر % 19(@)(@@) % فتقضت ليلتي في نعمة ، % مرة ألثمها غير حصر % 20(@)(@@) % وأفري مرطها عن مخطف % ضامر الأحشاء ، فعم المؤتزر % % PageV01P212 21(@)(@@) % فلهونا ليلنا حتى إذا % % طرب لديك وهاج المدكر % 22(@)(@@) % حركتني ثم قالت جزعا % ودموع العين منها تبتدر : % 23(@)(@@) % قم صفي النفس ، لا تفضحني ، % قد بدا الصبح وذا برد السحر % 24(@)(@@) % فتولت في ثلاث خرد % كدمى الرهبان أو عين البقر % % 25(@)(@@) % لست أنسى قولها ، ما هدهدت % ذات طوق فوق غصن من عشر % 26(@)(@@) % حين صممت على ما كرهت % هكذا يفعل من كان غدر % PageV01P213 البحر : رمل تام 1(@)(@@) % هيج القلب مغان وصير % دارسات قد علاهن الشجر % 2(@)(@@) % ورياح الصيف قد أذرت بها % % تنسج الترب فنونا والمطر % 3(@)(@@) % ظلت فيه ، ذات يوم ، وقفا ، % أسأل المنزل هل فيه خبر % 4(@)(@@) % للتي قالت لأتراب لها % % قطف ، فيهن أنس وخفر % % 5(@)(@@) % إذ تمشين بجو مؤنق ، % نير النبت تغشاه الزهر % 6(@)(@@) % بدماث سهلة زينها % % يوم غيم لم يخالطه قتر % 7(@)(@@) % قد خلونا ، فتمنين بنا ، % إذ خلونا اليوم نبدي ما نسر % 8(@)(@@) % فعرفن الشوق في مقلتها % % وحباب الشوق يبديه النظر % % 9(@)(@@) % قلن يسترضينها : منيتنا % % لو أتانا اليوم ، في سر ، عمر % % 10(@)(@@) % بينما يذكرنني أبصرنني % % دون قيد الميل يعدو بي الأغر % PageV01P214 11(@)(@@) % قالت الكبرى : أتعرفن الفتى ؟ % قالت الوسطى : نعم ، هذا عمر % % 12(@)(@@) % قالت الصغرى ، وقد تيمتها : % قد عرفناه ، وهل يخفى القمر ! % 13(@)(@@) % ذا حبيب لم يعرج دوننا ، % ساقه الحين إلينا ، والقدر % % 14(@)(@@) % فأتانا ، حين ألقى بركه % جمل الليل 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms48# عليه و سبطر % 15(@)(@@) % ورضاب المسك من أثوابه ، % مرمر الماء عليه فنضر % 16(@)(@@) % قد أتانا ما تمنينا ، وقد % % غيب الأبرام عنا والقذر % PageV01P215 البحر : بسيط تام 1(@)(@@) % ما كنت أشعر ، إلا مذ عرفتكم ، % أن المضاجع تمسي تنبت الإبرا % % 2(@)(@@) % لقد شقيت ، وكان الحين لي سببا % أن علق القلب قلبا يشبه الحجرا % % 3(@)(@@) % قد لمت قلبي ، وأعياني بواحدة ، % فقال لي : لا تلمني وادفع القدرا ! % 4(@)(@@) % إن أكره الطرف يحسر دون غيركم ، % ولست أحسن إلا نحوك النظرا % % 5(@)(@@) % قالوا : صبوت ، فلم أكذب مقالتهم ، % وليس ينسى الصبى إن واله كبرا % % PageV01P216 البحر : رمل تام 1(@)(@@) % % وهموم حاضرات وذكر % 2(@)(@@) % ومفقال الخود ، لكا واجهت % جهة الركب وعيناها درر : % 3(@)(@@) % يا أبا الخطاب ما جشمتنا % % حجة فيها عناء وسهر ! % 4(@)(@@) % بعد بر الله ، إلا نظرة % منك ، ليس لها عندي خطر % % 5(@)(@@) % قالت : ما جشمتنا من حبكم ، % يا ابنة الخيرين ، أدهى وأمر % % 6(@)(@@) % ولقد زاد فؤادي حزنا % قولها لي : إرع سري يا عمر ! % 7(@)(@@) % قلت : أنت الشيء يرعى سره % ويؤاتى في هواه ، ويسر % % PageV01P217 البحر : كامل تام 1(@)(@@) % يا عمر حم فراقكم عمرا % % وعدلت عنا النأي والهجرا % % 2(@)(@@) % إحدى بني أود كلفت بها % % حملت بلا ترة لنا وترا % % 3(@)(@@) % والله ، ما أحببت حبكم ، % لا ثيبا خلقت ولا بكرا % % 4(@)(@@) % ما إن أقيم لحاجة عرضت % إلا لأبلي فيكم عذرا % % 5(@)(@@) % وترى لها دلا إذا نطقت % تركت بنات فؤاده صعرا % % 6(@)(@@) % كتساقط الرطب الجني من % % قنوان لا كثرا ولا نزرا % % 7(@)(@@) % بالخيف منزلها ومسكنها ، % وتحل مكة إن شتت ، قصرا % % 8(@)(@@) % من أجلها حبست ركائبنا % % شهرا تجرم بعده شهرا % % PageV01P218 البحر : كامل تام 1(@)(@@) % وذكرت فاطمة التي علقتها ضاق الغداة بحاجتي صدري % % ويئست بعد تقارب الأمر % % 2(@)(@@) % وذكرت فاطمة التي علقت % عرضا فيا لحوادث الدهر ! % 3(@)(@@) % ممكورة ، ردع العبير بها ، % جم العظام لطيفة الخصر % 4(@)(@@) % وكأن فاها عند رقدتها % % تجري عليه سلافة الخمر % 5(@)(@@) % شرقا بذوب الشهد ، يخلطه % بالزنجبيل وفأرة التجر % 6(@)(@@) % عرضت لنا بالخيف في بقر ، % تقرو الكباث وناضر السدر % 7(@)(@@) % وجلت أسيلا يوم ذي خشب % ريان ، مثل فجاءة البدر % 8(@)(@@) % فسبت فؤادي ، إذ عرضت لها ، % يوم الرحيل بساحة القصر % 9(@)(@@) % بمزين ردع العبير به % حسن الترائب واضح النحر % % 10(@)(@@) % وبعينى دم ، شادن ، خرق 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms49# ، % يرعى الرياض ببلدة قفر % % PageV01P219 11(@)(@@) % لما رأيت مطيها حزقا % خفق الفؤاد وكنت ذا صبر % 12(@)(@@) % وتبادرت عيناي بعد تجلد % فانهلتا جزعا على الصدر % % 13(@)(@@) % أرق الحبيب إلى الحبيب ، لو ان % عذرت بذلك أول العذر % 14(@)(@@) % ولقد عصيت ذوي قرابتنا % % طرا وأهل الود والصهر % 15(@)(@@) % حتى مقالهم ، إذ اجتمعوا : % أجننت ، أم ذا داخل السحر ؟ % 16(@)(@@) % فأجبت : مهلا بعض عذلكم % لا بل منيت ولم أنل وتري % % 17(@)(@@) % بيدي ضعيف البطش ، معتجر ، % فرمى ولم آخذ له حذري % % PageV01P220 البحر : كامل تام 1(@)(@@) % ذكر الرباب وكان قد هجرا % % ذكرى قريبة أحدثت وطرا % % 2(@)(@@) % ولها بأعلى الخيف منزلة % هاجت له شوقا فما صبرا % % 3(@)(@@) % والبرد ، بين الحلتين ، به % تجنن ممن طاف ، أو نظرا % % 4(@)(@@) % قالت لتربيها بعمركما % % هل تطمعان بأن نرى عمرا % % 5(@)(@@) % إني كأن النفس موجسة ، % ولذاك أطمع أنه حضرا % % 6(@)(@@) % فأجابتاها في مهازلة ، % وأسرتا من قولها سخرا : % 7(@)(@@) % إنا لعمرك ما نخاف وما % % نرجو زيارة زائر ظهرا % % 8(@)(@@) % لو كان يأتينا مجاهرة % فيمن ترين ، إذا لقد شهرا % % 9(@)(@@) % قالت لها الصغرى ، وقد حلفت % بالله : لا يأتيكما شهرا % % 10(@)(@@) % فتنفست صعدا لحلفتها % % وهوت فشقت جيبها فطرا % % PageV01P221 11(@)(@@) % وجرت مآقيها بأدمعها % % جزعا ، وقالت : حب من ذكرا % % 12(@)(@@) % يا رب ، إني قد شغفت به ، % أعقب فؤادي منهم صبرا % % 13(@)(@@) % بينا تحاورهن ، قمت إلى % % أقفائهن لأسمع الحورا % % 14(@)(@@) % فأراب إحداهن ، فالتفتت ، % وطئي فلما أثبتت نظرا % % 15(@)(@@) % قالت لهن : أخو مجاهرة ، % قد جاءنا يمشي وما ستترا % % 16(@)(@@) % فيهن خود لست ناسيها % % حتى تجاوز حفرتي حفرا % % PageV01P222 البحر : كامل تام 1(@)(@@) % ردوا التحية ، أيها السفر ، % وقفوا ، فإن وقوفكم اجر ! % 2(@)(@@) % ماذا عليكم في وقوفكم % ريث السؤال سقاكم القطر % 3(@)(@@) % ب لله ربكم أما لكم % ب لمشعرين وأهله خبر % 4(@)(@@) % أوما أتاكم ب لمحصب من منى % % من أم عمرو وتربها ذكر ؟ % 5(@)(@@) % مكية هام الفؤاد بها ، % نسي العزاء ، فما له صبر % % 6(@)(@@) % مرتجة الردفين بهكنة % رؤد الشباب ، كأنها قصر % % 7(@)(@@) % قدرت له حينا لتقتله % ولكل ما هو كائن قدر % 8(@)(@@) % الشهر مثل اليوم ، إن رضيت ، % واليوم إن غضبت به شهر % 9(@)(@@) % حوراء آنسة مقبلها % % عذب ، كأن مذاقه خمر % % 10(@)(@@) % والعنبر المسحوق خالطه ، % وقرنفل يأتي به النشر % % PageV01P223 11(@)(@@) % وإذا تراءت في الظلام ، جلت % دجن الظلام ، . . . كأنها بدر 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms50# % % 12(@)(@@) % وتنو ، فتصرعها عجيزتها ، % ممشى الضعيف ، يؤوده البهر % % 13(@)(@@) % وكأن ضوء الشمس تحت قناعها % % 14(@)(@@) % نظرت إليك بعين مغزلة % حوراء خالط طرفها فتر % 15(@)(@@) % وكأن سمطيها على رشإ ، % مرتاده الغيطان والخمر % PageV01P224 البحر : وافر تام 1(@)(@@) % ألا يا هند قد زودت قلبي % % جوى حزن ، تضمنه الضمير % 2(@)(@@) % إذا ما غبت كاد إليك قلبي % % فدتك النفس ، من شوق يطير % % 3(@)(@@) % يطول اليوم فيه لا أراكم % ويومي عند رؤيتكم قصير % 4(@)(@@) % وقد أقرحت ب لهجران قلبي % % وهجري ف علمي أمر كبير % 5(@)(@@) % فديتك أطلقي حبلي وجودي ، % فإن الله ذو عفو غفور % PageV01P225 البحر : مديد تام 1(@)(@@) % يا خليلي هاجني الذكر % وحمول الحي ، إذ صدروا % % 2(@)(@@) % ظعنوا ، كأن ظعنهم % مونع القنوان ، أو عشر % % 3(@)(@@) % بالتي قد كنت آملها ، % ففؤادي موجع حذر % % 4(@)(@@) % ظبية من وحش ذي بقر ، % شأنها الغيطان والغدر % 5(@)(@@) % رخصة حوراء ناعمة % طفلة ، كأنها قمر % % 6(@)(@@) % لو سقي الأموات ريقتها ، % بعد كأس الموت ، لانتشروا % % 8(@)(@@) % ويكاد العجز إن نهضت % بعد طوله البهر ينبتر % 9(@)(@@) % قد ، إذا خبرت أنهم % قدموا الأثقال ، فابتكروا % % 10(@)(@@) % أخيام البئر منزلهم ، % أم هم بالعمرة ئتمروا % % 11(@)(@@) % أم بأعلى ذي الأراك لهم % % مربع قد جاده المطر % PageV01P226 12(@)(@@) % سلكوا خل الصفاح ، لهم % % زجل أحداجهم زمر % 13(@)(@@) % سلكوا شعب النقاب بها % % زمرا ، تحتثهم زمر % % 14(@)(@@) % قال حاديهم لهم أصلا % أمكنت للشلرب الغدر % % 15(@)(@@) % ضربوا حمر القباب لها % % وأحيطت حولها الحجر % 16(@)(@@) % فطرقت الحي مكتتما % ومعي سيف به أثر % 17(@)(@@) % وأخ لم أخش نبوته ، % بنواحي أمرهم خبر % % 18(@)(@@) % فإذا ريم على مهد % في حجال الخز مستتر % 19(@)(@@) % بادن تجلو مفلجة % عذبة ، غرا ، لها أشر % 20(@)(@@) % حولها الأحراس ترقبها % % نوم ، من طول ما سهروا % % 21(@)(@@) % أشبهوا القتلى ، وما قتلوا ، % ذاك إلا أنهم سمروا % % PageV01P227 22(@)(@@) % فدعت ب لويل ثم دعت ، % حين أدناني لها النظر % 23(@)(@@) % ودعت حوراء آنسة % حرة من شأنها الخفر % 24(@)(@@) % ثم قالت للتي معها : % ويح نفسي قد أتى عمر % 25(@)(@@) % ما له قد جاء يطرقنا % % ويرى الأعداء قد حضروا ؟ % 26(@)(@@) % لشقائي ، أخت ، علقنا ، % ولحين ساقه القدر % % 27(@)(@@) % قت : عرضي دون عرضكم ، % ولمن عاداكم جزر % % PageV01P228 البحر : رمل تام 1(@)(@@) % شاق قلبي منزل دثروا ، % حالف الأرواح والمطرا % % 2(@)(@@) % شمألا تذري إذا لعبت % عاصفا أذيالها الشجرا % % 3(@)(@@) % للتي قالت لجارتها : % ويح قلبي ، ما 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms51# دهى عمرا ؟ % 4(@)(@@) % فيم أمسى لا يكلمنا ؟ % وإذا ناطقته بسرا % % 5(@)(@@) % أبه عتبى فأعتبه % أم به صبر ، فقد صبرا % % 6(@)(@@) % أم حديث جاءه كذب ، % أم به هجر ، فقد هجرا % % 7(@)(@@) % أم لقول قاله كاشح % كاذب ، يا ليته قبرا % % 8(@)(@@) % لو علمنا ما يسر به ، % ما طعمنا البارد الخصرا % % 9(@)(@@) % وأرى شوقي سيقتلني ، % وحبيب النفس إن هجرا % % 10(@)(@@) % إن نومي ما يلائمني ، % أجله يا أخت إن ذكرا % % PageV01P229 11(@)(@@) % فأجابت في ملاطفة % أسرعت فيها لها الحورا : % 12(@)(@@) % إنني إن لم امت عجلا ، % أرتجي إن راح ، أو بكرا % % 13(@)(@@) % فإذا ما راح ف ستلمي % % إن دنا في طوفه الحجرا % % 14(@)(@@) % وأشفي البرد عنك له ، % كي تشوقيه إذا نظرا % % 15(@)(@@) % فأرتني مسفرا حسنا ، % خلته ، إذ أسفرت ، قمرا % % 16(@)(@@) % وشتيت النبت متسقا % طيبا أنيابه خصرا % % 17(@)(@@) % لشقائي ، قادني بصري ، % ولحين ، وافق القدرا % % 18(@)(@@) % ثم قالت للتي معها : % لا تديمي نحوه النظرا % % 19(@)(@@) % خالسيه ، أخت ، في خفر % فوعيت القول إذ وقرا % % 20(@)(@@) % إنه يا أخت يصرمنا % % إن قضى من حاجة وطرا % % PageV01P230 21(@)(@@) % قلت : قد أعطيت منزلة % ما أرى عندي لها خطرا % % 22(@)(@@) % فأنيلي عاشقا ، دنفا ، % ثم أخزى الله من كفرا % % PageV01P231 البحر : وافر تام 1(@)(@@) % لمن دمن بخيف منى قفور % كأن عراص مغناها الزبور % 2(@)(@@) % منازل أقفرت من أم عمرو ، % ولو طال الليالي والدهور % 3(@)(@@) % فلا ينسى فؤادك أم عمر و % % ولو طال الليالي والشهور % 4(@)(@@) % أقول ، وشف سجف القز عنها : % أشمس تلك ، أم قمر منير ؟ % 5(@)(@@) % ويسرها لنا الميمون حتى % % لقيناها ببطن منى تسير % 6(@)(@@) % فحيت و ستهل الدمع مني % % لعبرتها على خد يمور % 7(@)(@@) % فقالت : حلت عن عهدي وودي % % جديد ما حييت لكم يسير % 8(@)(@@) % وطاوعت الوشاة ، وزرت من لم % % يزرك وقد تبين لي الختور % 9(@)(@@) % ولم ترع الوصال كما رعينا ، % وبانت منك لي ، عمدا ، أمور % % 10(@)(@@) % ولم تجز القروض ولم تثبها % % وأنت لكل صالحة كفور % % PageV01P232 11(@)(@@) % حلفت لها برب منى إذا ما % % تغيب في عجاجتهم ثبير : % 12(@)(@@) % لأنتم حب شيء إن جلسنا % % وإن زرنا ، فأوجه من نزور % % 13(@)(@@) % فإن كنت البعاد أردت عني ، % فقلبي عن بعادكم نفور % % PageV01P233 البحر : خفيف تام 1(@)(@@) % منع النوم عينك الإدكار % من حبيب شطت به عنك دار % 2(@)(@@) % ولقد قلت زاجرا لفؤادي % % لو نهاه 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms52# عن حبها الإزدجار : % 3(@)(@@) % صاح أقصر فلست أول إلف % قد عداه عن إلفه الأقدار % % 4(@)(@@) % وتناءى عنه الحبيب ، فأضحى % % بعد قرب قد شط عنه المزار % PageV01P234 البحر : كامل تام 1(@)(@@) % عوجي علي ، فسلمي جبر ، % فيم الصدود وأنتم سفر % 2(@)(@@) % ما نلتقي إلا ثلاث منى % حتى يفرق بيننا النفر % % 3(@)(@@) % الحول ثم الشهر يتبعه % ما الدهر إلا الحول والشهر % PageV01P235 البحر : طويل 1(@)(@@) % أتحذر وشك البين ، أم لست تحذر ؟ % وذو الحذر النحرير قد يتفكر % 2(@)(@@) % ولست موقى إن حذرت قضية ، % وليس مع المقدار يكدي التهور % 3(@)(@@) % تذكرت إذ بان الخليط زمانه % وقد يسقم المرء الصحيح التذكر % 4(@)(@@) % وكان ادكاري شادنا قد هويته ، % له مقلة حوراء ، فالعين تسحر % % 5(@)(@@) % كأني لما أن تولت به النوى ، % من الوجد ، مأموم الدماغ ، محير % % 6(@)(@@) % إذا رمت عيني أن تفيق من البكا % % تبادر دمعي مسبلا يتحدر % 7(@)(@@) % لقد ساقني حين إلى الشادن الذي % % أضر بنفسي أهله حين هجروا % % 8(@)(@@) % ولو أنه لا يبعد الله داره % ولا زلت منه حيث ألقى وأخبر % 9(@)(@@) % لقد كان حتفي يوم بانوا بجؤذر % عليه سخاب فيه در وعنبر % % 10(@)(@@) % فقلت : ألا يا أيها الركب إنني % % بكم مستهام القلب ، عان ، مشهر % % PageV01P236 11(@)(@@) % بلي كل ود كان في الناس قبلنا ، % وودي لا يبلى ولا يتغير % % 12(@)(@@) % فقالوا لعمري : قد عهدناك حقبة % وأنت امرؤ من دون ما جئت تخطر % % 13(@)(@@) % وقالت لأتراب لها ، حين عرجوا % % علي قليلا إن ذا بي يسخر % 14(@)(@@) % وقالت : أخاف الغدر منه وإنني % % لأعلم أيضا انه ليس يشكر % % 15(@)(@@) % فقلت لها : يا هم نفسي ومنيتي ، % ألا لا وبيت الله إني مهبر % 16(@)(@@) % مصاب عميد القلب أعلم أنني % % إذا أنا لم ألقاكم ، سوف أدمر % % 17(@)(@@) % وشكري أن لا أبتغي بك خلة ، % وكيف ، وقد عذبت قلبي ، أغدر ؟ % 18(@)(@@) % وإني هداك الله صرمي سفاهة % وفيم بلا ذنب أتيته أهجر % 19(@)(@@) % وقد حال دون الكفر والغدر أنني % % أعالج نفسا هل تفيق وتصبر % 20(@)(@@) % فقالت : فإنا قد بذلنا لك الهوى ، % فب لطائر الميمون تلقى وتحبر % PageV01P237 21(@)(@@) % فقلت لها : إن كنت أهل مودة ، % فميعاد ما بيني وبينك عزور % % 22(@)(@@) % فقالت : فإنا قد فعلنا ، وقد بدا % % لنا عند ما قالت بنان ومحجر % 23(@)(@@) % فرنح قلبي فهو يزعم 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms53# أنه % سيهلك قبل الوعد ، أو سوف يفتر % % PageV01P238 البحر : مجزوء الوافر 1(@)(@@) % طربت ، ورد من تهوى % % جمال الحي ف بتكرا % % 2(@)(@@) % فظلت مكفكفا دمعا % إذا نهنهته ، ابتدرا % % 3(@)(@@) % وبت لذاك مكتئبا % أقاسي الهم و لسهرا % % 4(@)(@@) % لبين الحي إذ هاجوا % % لك الأحزان والذكرا % % 5(@)(@@) % فإن يك حبل من ته % % واه أمسى منك منبترا % % 6(@)(@@) % فقدما كنت لا تلقى % % لصفو قد مضى كدرا % % 7(@)(@@) % ليالي لا أبالي من % لحى في الحب أو عذرا % % 8(@)(@@) % ولن أنسى بخيف منى % % تسارق زينب النظرا % % 9(@)(@@) % إلي ، بمقلتي ريم ، % ترى في طرفها حورا % % 10(@)(@@) % وثغر واضح رتل % ترى في خده أشرا % % PageV01P239 11(@)(@@) % ولا أنسى مقالتها % % لتربيها : ألا نتظرا % % 12(@)(@@) % أبا الخطاب ، ننظر فيم ، % م بعد وصاله هجرا % % 13(@)(@@) % ولوماه ، وقيتكما ! % على الهجران ، واستترا % % 14(@)(@@) % وقولا : قد ظفرت بها ، % كفاك وخبرا الخبرا % % 15(@)(@@) % وقولا : إن سرك ، يوم % م بطن الخيف قد شهرا % % 16(@)(@@) % فقلت : أغرها أني % % لها عاصيت من زجرا ؟ % 17(@)(@@) % وأن أنزلتها في الود % مني السمع والبصرا ؟ % 18(@)(@@) % فأين العهد والميثا % % لا تشعر بنا بشرا ؟ % 19(@)(@@) % وقل للمالكية لا % % تلومي القلب أن هجرا % % PageV01P240 البحر : مجزوء الوافر 1(@)(@@) % تصابى القلب و دكرا % % صباه ، ولم يكن ظهرا % % 2(@)(@@) % لزينب إذ تجد لنا % % صفاء لم يكن كدرا % % 3(@)(@@) % أليست ب لتي قالت % لمولاة لها ظهرا : % 4(@)(@@) % أشيري ب لسلام له % إذا هو نحونا نظرا % % 5(@)(@@) % وقولي في ملاطفة % أزينب نولي عمرا ! % PageV01P241 البحر : كامل تام 1(@)(@@) % صدر الحبيب فهاجني صدره % إني كذاك تشوقني ذكره % 2(@)(@@) % إن المحب إذا تخالجه % شوق كذاك لهم يحتضره % 3(@)(@@) % ونظرت نظرة عاشق دنف % بادي الصبابة عازم نظره % 4(@)(@@) % فرأيت رئما في مجاسدها % % وسط الحدائق مشرقا بشره % 5(@)(@@) % أقبلت أطمع أن أزورهم % إني قديم الشوق منتشره % % 6(@)(@@) % فلقيتها ، والعين آمنة ، % والليل داج ، مسفر قمره % % 7(@)(@@) % في موكب لاق الجمال به % كالغيث لاط بنبته زهره % % PageV01P242 البحر : مجزوء الرجز 1(@)(@@) % قد هاج قلبي محضر ، % بذي عكاظ ، مقفر % 2(@)(@@) % ربع لهند قد عفا % % قد كان حينا يعمر % 3(@)(@@) % وجاءني بينهم % % ثقف لطيف مخبر % 4(@)(@@) % ترب لهند ، غادة ، % تلك غزال معصر : % 5(@)(@@) % إن الخليط رائح % قبل الصباح ، يبكر % 6(@)(@@) % بانوا بأمثال لدمى ، % بل دونهن ، الصور % 7(@)(@@) % فيهن هند ، ليتني ، % ما عمرت ، أعمر ! % 8(@)(@@) % حتى إذا ما جاءها % % حتف أتاني 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms54# القدر % PageV01P243 البحر : مجزوء الرجز 1(@)(@@) % هاج القريض الذكر % لما غدوا فابتكروا % % 2(@)(@@) % على بغال وسج % قد ضمهن السفر % 3(@)(@@) % وقولها لأختها : % أمطمئن عمر % 4(@)(@@) % بأرضنا ، فماكث ، % أم حان منه السفر ؟ % 5(@)(@@) % قالت : غدا أو سبعة % يروح أو يبتكر % 6(@)(@@) % أموا الطريقين معا % ويسروا ما يسروا % % 7(@)(@@) % حتى إذا ما وازنوا % % المروة ، حين ائتمروا % % 8(@)(@@) % قيل : انزلوا من ليلكم ، % فعرسوا ، فاستقمروا % % 9(@)(@@) % لما ستقروا ضربت % حيث أرادوا الحجر % 10(@)(@@) % فيهم مهاة كاعب % كأنما هي قمر % PageV01P244 11(@)(@@) % يضيق عن أردافها % % إذا يلاث المئزر % 12(@)(@@) % خود ، يفوح المسك من % % أردانها والعنبر % 13(@)(@@) % تفتر عن مثل أقا % % حي الرمل فيها أشر % 14(@)(@@) % تلك التي ليس لها % % في الناس شبها بشر % 15(@)(@@) % نأت بها عنا عيو % % ج في مطاها عسر % 16(@)(@@) % تالله أنسى حبها % % حياتنا أو أقبر % % PageV01P245 البحر : متقارب تام 1(@)(@@) % أتوصل زينب ، أم تهجر ، % وإن ظلمتنا ، ألا تغفر ؟ % 2(@)(@@) % أدلت ، ولج بها أنها % % تريد العتاب وتستكبر % 3(@)(@@) % وتعلم أن لها عندنا % % ذخائر ملحب لا تظهر % 4(@)(@@) % وودا ، ولو نطق الكاشحو % % ن فيها ولو أكثر المكثر % 5(@)(@@) % ولست بناس مقال الفتاة ، % غداة المحصب إذ جمروا % % 6(@)(@@) % ألست ملما بنا يا فتى % % ينفض عنا الذي ينظر % 7(@)(@@) % فقلت : بلى ، أقعدي ناصحا ، % % 8(@)(@@) % وآية ذلك أن تسمعي % % نداء المصلين ، يا معمر ! % 9(@)(@@) % فأقبلت ، والناس قد هجعوا ، % أطوف عليهم وما أنظر % % 10(@)(@@) % إذا كاعبان ورخص لبنان % أسيل مقلده ، أحور % PageV01P246 11(@)(@@) % فسلمت خفيا فحيينني % % وقلبي ، من خشية ، أوجر % 12(@)(@@) % وقالت : طربت ، وطاوعت بي % % مقال العدو ومن يزجر % 13(@)(@@) % فقلت مقال أخي فطنة ، % سميع بمنطقها مبصر : % 14(@)(@@) % أللصرم تطلبين الذنوب % ولم أجن ذنبا لكي تغدروا % % 15(@)(@@) % فإن كنت حاولت صرم الحبا % % ل ، فإن وصالك لا يبتر % % 16(@)(@@) % فإن كنت أدللت كي تعتبي % % فكفي لكم ب لرضا توسر % 17(@)(@@) % فقالت لها حرة عندها ، % لذيذ مقبلها ، معصر : % 18(@)(@@) % دعي عنك عذل الفتى واسعفي ، % فإن الوداد له أسور % % 19(@)(@@) % فبت أحكم فيما أردت ، % ت حتى بدا واضح أشقر % 20(@)(@@) % تميل علي إذا سقتها % % كما نهال مرتكم أعفر % PageV01P247 21(@)(@@) % يفوح القرنفل من جيبها ، % وريح اليلنجوج والعنبر % % 22(@)(@@) % فبت وليلي كلا أو بلى % % لديها ، وبل ليلتي أقصر % % 23(@)(@@) % وكيف اجتنابك دار الحبيب ، % كيف عن ذكره تصبر ؟ % PageV01P248 البحر : متقارب تام 1(@)(@@) % ألم تسأل المنزل المقفرا ، % بيانا 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms55# فيبخل أو يخبرا ؟ % 2(@)(@@) % ذكرت به بعض ما قد مضى % % وحق لذي الشجو أن يذكرا % % 3(@)(@@) % مبيت الحبيبين قد ظاهرا % % كساء وبردين أن يمطرا % % 4(@)(@@) % ومشي ثلاث به موهنا ، % خرجن إلى عاشق زورا % % 5(@)(@@) % مهاتان شيعتا جؤذرا ، % أسيلا مقلده أحورا % % 6(@)(@@) % إلى مجلس من وراء القباب ، % سهل الربى ، طيب ، أعفرا % % 7(@)(@@) % وحوراء آنسة كالهلال ، % ل رخوا مفاصلها معصرا % % 8(@)(@@) % وأخرى تفدى وتدعو لنا % % إذا خافت العين أن تسترا % % 9(@)(@@) % سمون وقلن : ألا ليتنا % % نرى ليلنا دائما أشهرا % % 10(@)(@@) % ويغفل ذا الناس عن لهونا ، % ونسمره كله مقمرا % % PageV01P249 11(@)(@@) % غفلن عن الليل ، حتى بدت % تباشير من واضح أسفرا % % 12(@)(@@) % وقمن يعفين آثارنا % % بأكسية الخز أن تقفرا % % 13(@)(@@) % وقمن يقلن لو ان لنها % % ر مد له الليل ، ف ستأخرا % % 14(@)(@@) % قضينا به بعض ما نشتهي ، % وكان الحديث به أجدرا % % PageV01P250 البحر : متقارب تام 1(@)(@@) % صحا القلب عن ذكر أم البنين % % بعد الذي قد مضى في العصر % 2(@)(@@) % وأصبح طاوع عذاله ، % وأقصر ، بعد الإباء ، الصبر % 3(@)(@@) % أحين وقد راعه رائع % من الشيب من يعله يزدجر % 4(@)(@@) % على أن حب ابنة العامري ، % كالصدع في الحجر المنفطر % % 5(@)(@@) % يهيم إليها وتدنو له % جنوح الظلام بليل حذر % % 6(@)(@@) % وينمي لها حبها عندنا % % فمن قال من كاشح لم يضر % % 7(@)(@@) % فمن كان عن حبه ساليا ، % فلست بسال ، ولا معتذر % % 8(@)(@@) % تذكرت ب لشري أيامها % % وأيامنا بكثيب الأمر % 9(@)(@@) % ليالي يجري بأسرارنا % % أمين لنا ، ليس يفشي لسر % % 10(@)(@@) % فأعجبها غلواء الشبا % % ب تنبت في ناضر مسبكر % PageV01P251 11(@)(@@) % وإذ أنا غر أجاري ددا % أخو لذة كصريع السكر % % 12(@)(@@) % من المسبغين رقاق البرو % % د أكسو النعال فضول الأزر % 13(@)(@@) % وإذ هي حوراء ، رعبوبة ، % ثقال متى ما تقم تنبتر % 14(@)(@@) % تكاد روادفها ، إن نأت % % إلى حاجة ، موهنا تنبتر % 15(@)(@@) % وتدني النصيف على واضح ، % جميل ، إذا سفرت عنه ، حر % % 16(@)(@@) % وإذ هي تضحك عن نير ، % لذيذ المقبل ، عذب ، خصر % % 17(@)(@@) % شتيت المراكز أحوى اللثات % % ثات ، كدر تنضد ، فيه أشر % % 18(@)(@@) % وإذ هي مثل مهاة الكثيب ، % تحنو على جؤذر في خمر % % 19(@)(@@) % ولست بناس ، طوال الحيا % % ة ليلتنا بكثيب الغدر % 20(@)(@@) % ولا قولها لي إذ أيقنت % بما قد أريد بها : استقر % % PageV01P252 البحر : طويل 1(@)(@@) % تقول ابنة البكرين يوم التقينا 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms56# : % لقد شاب هذا بعدنا وتنكرا % % 2(@)(@@) % فمثل الذي عاينت شيب لمتي % % ومثل الذي أخفي من الحزن نكرا % % 3(@)(@@) % فكم فيهم من سيد قد رزئته % وذي شيبة ك لبدر أروع أزهرا % % 4(@)(@@) % أولئك هم قومي ، وجدك ، لا أرى % % لهم شبها فيمن على الأرض معشرا % % 5(@)(@@) % أذب وراء المستضيف إذا دعا % % وأضرب في يوم الهياج السنورا % % 6(@)(@@) % وأفضل أحلاما ، وأعظم نائلا ، % وأقرب معروفا وأبعد منكرا % % 7(@)(@@) % وإن أنعموا ثنوا عليه بصالح % ولم يتبعوا الإحسان منا مكدرا % % PageV01P253 البحر : كامل أحذ 1(@)(@@) % لجت فطيمة منك في هجر % غدرا ، وهن صواحب الغدر ! % 2(@)(@@) % من بعد ما أعطتك موثقها % % أن لا تخونك آخر الدهر % % 3(@)(@@) % مكية كالريم ، علقها % % قلبي ، فضاق بحبها صدري % % 4(@)(@@) % وكأنني أسقى إذا ذكرت % صفو المدام ، على رقى السحر % % PageV01P254 البحر : كامل تام 1(@)(@@) % ابكيت في طرب ، أبا بشر ، % وذكرت عثمة أيما ذكر % % 2(@)(@@) % وهي التي لما مررت بها % % في الطوف بين الركن والحجر % % 3(@)(@@) % قالت حصان غير فاحشة ، % فسمعت ما قالت ، ولم تدر % % 4(@)(@@) % لمناصف خرد يطفن بها % % مثل الظباء يكدن بالسدر : % 5(@)(@@) % هذا الذي يسبي الفؤاد ، ولا % % يكني ، ولكن باح في الشعر % 6(@)(@@) % إن الرجال على تألفهم % طبعوا على الإخلاف والغدر % % PageV01P255 البحر : منسرح 1(@)(@@) % قد هاج أحزان قلبك الذكر ، % واشتاق ، والشوق للفتى عبر % 2(@)(@@) % هيجني البدن الملاح ، فما % % انفك بين الحسان أقتصر % % 3(@)(@@) % هل من كريم يهتاج ذي حسب % قد شفه من حبيبه السهر % 4(@)(@@) % أو هل تغنى لشجوه ، فبكى ، % كما تغنى لشجوه عمر ؟ % 5(@)(@@) % تسترهن الخزوز إن فتحت % يوما مقاصير دونها الحجر % % 6(@)(@@) % هيف رعابيب بدن شمس % فيهن حسن الدلال والخفر % 7(@)(@@) % ما أحسن الود والصفاء وما % % أقبح منها الهجران والعذر % % PageV01P256 البحر : طويل 1(@)(@@) % سلام عليها ، ما أحبت سلامنا ، % فإن كرهته فالسلام على أخرى % % PageV01P257 البحر : كامل تام 1(@)(@@) % أبت الروادف والثدي لقمصها % % مس البطون ، وأن تمس ظهورا % % 2(@)(@@) % وإذا الرياح مع العشي تناوحت ، % نبهن حاسدة ، وهجن غيورا % % PageV01P258 البحر : خفيف تام 1(@)(@@) % خبروها بأنني قد تزوجت ، % فظلت تكاتم الغيظ سرا % % 2(@)(@@) % ثم قالت لأختها ولأخرى : % جزعا : ليته تزوج عشرا % % 3(@)(@@) % وأشارت إلى نساء لديها ، % لا ترى دونهن للسر سترا : % 4(@)(@@) % ما لقلبي ، كأنه ليس مني ، % وعظامي إخال فيهن فترا % % 5(@)(@@) % من حديث نمى 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms57# إلي ، فظيع ، % خلت في القلب من تلظيه جمرا % % PageV01P259 البحر : خفيف تام 1(@)(@@) % حي طيفا من الأحبة زارا % % بعدما صرع الكرى السمارا % % 2(@)(@@) % طارقا في المنام ، تحت دجى اللي % % ل ، ضنينا بأن يزور نهارا % % 3(@)(@@) % قلت : ما بالنا جفينا وكنا % % قبل ذاك ، الأسماع والأبصارا ؟ % 4(@)(@@) % قال : إنا كما عهدت ، ولكن % % شغل الحلي أهله أن يعارا % % PageV01P260 البحر : بسيط تام 1(@)(@@) % تقول : يا عمتا كفي جوانبه % ويلي ، بليت ، وأبلى جيدي الشعر % 2(@)(@@) % مثل الأساود قد أعيا مواشطه % تضل فيه مداريها ، وتنكسر % 3(@)(@@) % فإن نشرت على عمد ذوائبها ، % أبصرت منه فتيت المسك ينتثر % PageV01P261 البحر : متقارب تام 1(@)(@@) % تذكرت هندا وأعصارها % % ولم تقض نفسك أوطارها % % 2(@)(@@) % تذكرت النفس ما قد مضى % % وهاجت على العين عوارها % % 3(@)(@@) % لتمنح رامة منا الهوى ، % وترعى لرامة أسرارها % % 4(@)(@@) % إذا لم نزرها حذار العدى % % حسدنا على الزور زوارها % % PageV01P262 البحر : بسيط تام 1(@)(@@) % قد حان منك ، فلا تبعد بك الدار ، % بين ، وفي البين للمتبول إضرار % 2(@)(@@) % قالت : من انت على ذكر ؟ فقلت لها : % أنا الذي ساقني للحين مقدار % PageV01P263 البحر : طويل 1(@)(@@) % رأين الغواني الشيب لاح بعارضي % % فأعرضن عني بالخدود النواضر % 2(@)(@@) % وكن إذا أبصرنني أو سمعنني % % سعين فرقعن الكوى ب لمحاجر % 3(@)(@@) % فإن جمحت عني نواظر أعين ، % رمين بأحداق المها والجآذر % 4(@)(@@) % فإني من قوم كريم نجارهم ، % لأقدامهم صيغت رؤوس المنابر % PageV01P264 البحر : بسيط تام 1(@)(@@) % إني امرؤ مولع بالحسن أتبعه ، % لا حظ لي فيه إلا لذة النظر % PageV01P265 البحر : بسيط تام 1(@)(@@) % قالت ، وأبثثتها سري وبحت به : % قد كنت عندي تحت الستر ، فاستتر % 2(@)(@@) % ألست تبصر من حولي ؟ فقلت لها : % غطى هواك ، وما ألقى ، على بصري % % PageV01P266 البحر : طويل 1(@)(@@) % عفا الله عن ليلى الغداة ، فإنها % % إذا وليت حكما علي تجور % PageV01P267 البحر : طويل 1(@)(@@) % لعمري لقد نلت الذي كنت أرتجي % % وأصبحت لا أخشى الذي كنت أحذر % 2(@)(@@) % فليس كمثلي اليوم كسرى وهرمز % ولا الملك النعمان مثلي وقيصر % PageV01P268 البحر : مجزوء الوافر 1(@)(@@) % بعثت وليدتي سحرا % وقلت لها : خذي حذرك % 2(@)(@@) % وقولي ، في معاتبة ، % لزينب : نولي عمرك % % 3(@)(@@) % فإن داويت ذا سقم % فأخزى الله من كفرك % % 5(@)(@@) % أهذا سحرك النسوا % % ن ؟ قد خبرنني خبرك % 6(@)(@@) % وقلن إذا قضى وطرا % وادرك حاجة هجرك % % PageV01P269 البحر 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms58# : كامل تام 1(@)(@@) % أبت البخيلة أن تنولني % % فأظن أني زائر رمسي % % 2(@)(@@) % لا خير في الدنيا وبهجتها ، % إن لم توافق نفسها نفسي % % 3(@)(@@) % لا صبر لي عنها ، إذا برزت ، % ك لبدر أو قرن من الشمس % 4(@)(@@) % نظرت إليك بعين جازئة % كحلاء وسط جآذر خنس % 5(@)(@@) % فسبت فؤادك ، عند نظرتها ، % بملاحة الأنياب والأنس % 6(@)(@@) % جودي لمن أورثته سقما ، % وتركته حيران في لبس % 7(@)(@@) % لا تحرميه الوصل و تخذي % % أجرا فليس بذاك من بأس % 8(@)(@@) % ولقد خشيت بأن يكون بهش % % من حبكم طرف من لمس % PageV01P270 البحر : كامل تام 1(@)(@@) % إن الخليط تصدعوا أمس % وتصدعت لفراقهم نفسي % % 2(@)(@@) % ووجدت وجدا كان أهونه % كأشد وجد الجن والإنس % 3(@)(@@) % وتشتت الأهواء يخلجني % % نحو العراق ، ومطلع الشمس % % 4(@)(@@) % وهناك فأتوني بخرعبة ، % غراء ، آنسة ، من اللعس % % 5(@)(@@) % ما كان من سقم فكان بنا % % وبها السلام ، وصحة النفس % % 6(@)(@@) % وتبيت عوادي وقد يئسوا % % مني وأصبح مثلما أمسي % % PageV01P271 البحر : كامل تام 1(@)(@@) % فيم الوقوف بمنزل خلق % أو ما سؤال جنادل خرس ؟ % 2(@)(@@) % عجت المطي به أسائله % أين استقرت دارة الشمس ؟ % 3(@)(@@) % فعجبت منها إذ تقول لنا : % يا صاح ، ما هذي من الأنس % 4(@)(@@) % ميمونة ولدت على يمن ، % ب لطائر الميمون لا النحس % % 5(@)(@@) % مقبولة ، لبق القبول بها ، % ليس القبول بها بذي نكس % % 6(@)(@@) % غراء واضحة لها بشر % كالرق مستعر من الورس % 7(@)(@@) % زمت فؤادي ، فهو يتبعها % % للغور إن غارت وللجلس % % PageV01P272 البحر : طويل 1(@)(@@) % ومن لسقيم يكتم الناس ما به % لزينب نجوى صدره والوساوس % 2(@)(@@) % أقول لمن يبغي الشفاء : متى تجىء % بزينب ، تدرك بعض ما انت لامس % 3(@)(@@) % فإنك إن لم تشف من سقمي بها % % فإني من طب الاطباء يائس % 4(@)(@@) % فلست بناس ليلة الدار مجلسا % لزينب حتى يعلو الرأس رامس % 5(@)(@@) % خلاء ، بدت قمراؤه وتكشفت % دجنته وغاب من هو حارس % 6(@)(@@) % فما نلت منها محرما ، غير أننا % % كلانا من الثوب المورد لابس % 7(@)(@@) % نجيين ، نقضي اللهو في غير مأثم ، % ولو رغمت ملكاشحين المعاطس % % PageV01P273 البحر : طويل 1(@)(@@) % خليلي ، ما بال المطايا ، كأنما % % نراها على الأدبار ب لقوم تنكص % 2(@)(@@) % وقد قطعت أعناقهن صبابة % فأنفسنا مما يلاقين شخص % 3(@)(@@) % وقد أتعب الحادي سراهن ، وانتحى % % لهن فما يألو عجول مقلص % 4(@)(@@) % يزدن بنا قربا 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms59# فيزداد شوقنا % % إذا زاد طول العهد والبعد ينقص % PageV01P274 البحر : مجزوء الكامل 1(@)(@@) % يا برق ، أبرق من قري % % بة مستكفا لي نشاصه % 2(@)(@@) % ذا هيدب دان ، يحن % إلى مناصفه قلاصه % % 3(@)(@@) % جون تخد سيوله % في الأرض منساحا فراصه % 4(@)(@@) % أمت غداة رحيلها % % والبين ذو شرك شصاصه % 5(@)(@@) % فبدت ترائب شادن ، % ومكرس فيه عقاصه % 6(@)(@@) % وأغر كالإغريض عذ % ب لا يغيره انتقاصه % PageV01P275 البحر : وافر تام 1(@)(@@) % فلا ، وأبيك ، ما صوت الغواني ، % ولا شرب التي هي كالفصوص % 2(@)(@@) % أردت برحلتي وأريد حظا % ولا أكل الدجاج ، ولا الخبيص % 3(@)(@@) % قميص ما يفارقني حياتي % % أنيس في المقام وفي الشخوص % PageV01P276 البحر : مجزوء الرمل 1(@)(@@) % أصبح القلب مريضا ، % راجع الحب غريضا % % 2(@)(@@) % وأجد الشوق وهنا ، % أن رأى وجها وميضا % % 3(@)(@@) % ثم بات الركب نوا % % ما ، ولم يطعم غموضا % % 4(@)(@@) % ذاك من هند قديما % % تركها القلب مهيضا % % 5(@)(@@) % إذ تبدت لي ، فأبدت % واضح اللون ، نحيضا % % 6(@)(@@) % وعذاب الطعم ، غرا % كأقاحي الرمل بيضا % % 7(@)(@@) % أرسلت سرا إلينا ، % وثنت رجعا خفيضا % % 8(@)(@@) % أن تلبث لي إلى أن % نلبس الليل العريضا % % 9(@)(@@) % وكأن الشهد والإس % فنط ، والماء الفضيضا % % 10(@)(@@) % باشر الأنياب منها % % بعدما ذاقت غموضا % % PageV01P277 البحر : كامل تام 1(@)(@@) % يا سكن ، قد ، والله رب محمد ، % أقصدت قلبي ب لدلال فعوضي % % 2(@)(@@) % وتحرجي من قتل من لم يبغكم % % هجرا ، ولا صرما ، ولم يبغض % 3(@)(@@) % يا سكن لست وإن نأت بك داركم ، % ب لسال عنك ولا الملول المعرض % 4(@)(@@) % يا سكن ، كم ممن تودد عندنا % % أقصي وكم من كاشح متعرض % 5(@)(@@) % وصرمت فيك أقاربي ، وعواذلي ، % ووصلت عمدا فيك حبل المبغض % % 6(@)(@@) % وحفظت فيك أمانة حملتها % % وعصيت كل محرش ومعرض % 7(@)(@@) % يا سكن ، حبك إذ كلفت بحبكم ، % غرضا أراه ورب مكة ممرضي % % 8(@)(@@) % يا سكن ، كان العهد فيما بيننا ، % ويمين صبر منك ، أن لا تنقضي % % 9(@)(@@) % منا العهود ، ولا يكون وصالكم % مذق الحديث بلط دين المقرض % 10(@)(@@) % فلبست ذلك منك بعد جديده % % ظلما لعمري كاللباس العرمض % PageV01P278 11(@)(@@) % ووجدت حبلك من حبال محافظ % سجح الخلائق في الوصال معرض % PageV01P279 البحر : كامل تام 1(@)(@@) % يا صاحبي ، قفا نقض لبانة ، % وعلى الظعائن قبلبينكما اعرضا % % 2(@)(@@) % لا تعجلاني أن أقول بحاجة % رفقا ، فقد زودت داء محرضا % % 3(@)(@@) % ما أنس الذي بذلت لنا 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms60# % % منها على عجل الرحيل لتمرضا % % 4(@)(@@) % ومقالها ب لنعف نعف محسر % لفتاتها : هل تعرفين المعرضا ؟ % 5(@)(@@) % هذا الذي أعطى مواثق عهده ، % حتى رضيت وقلت لي لن ينقضا % % 6(@)(@@) % وزعمت لي أن لا يحول ، فإنه % ساع طوال حياته لي بالرضا % % 7(@)(@@) % والله يعلم إن ظفرت بمثلها % % منه ليعترفن ما قد أقرضا % % 8(@)(@@) % فأصخت سمعي نحوها فكأنما % % أوريت بين جوانحي جمر الغضا % % 9(@)(@@) % فعطفت راحلتي ، وقلت لصاحبي : % أنظر ، بعمرك ، نحوها أن تومضا % % 10(@)(@@) % قال الجري : قد أومضت ، قلت : ائتها ، % و حذر حريز مقالها أن يعرضا % % PageV01P280 11(@)(@@) % قالت له : بالله ربك ، قل له % % قولا يحركه عسى أن يمعضا : % 12(@)(@@) % حملتها وجدا ، لو أمسى مثله % يوما على جبل ، إذا لتقضقضا % % 13(@)(@@) % وتنظرت منك الجزاء لوعدها % % حولا تجرم كله ، حتى انقضى % % 14(@)(@@) % فأجبتها : إن قلت فاعفوا و صفحوا % % فأنا الذي لا عذر لي فيما مضى % % 15(@)(@@) % زعمت بأني قد سلوت ، ولو درت % أن لم أجد من حبها متعرضا % % 16(@)(@@) % ما عدت أرضي الكاشحين بهجرها ، % أبدا ، وإن قال النصيح وعرضا % % 17(@)(@@) % وأطعت فيها الكاشحين ، فأكثروا % % فيها المقالة شامتا ، ومعرضا % % 18(@)(@@) % طاوعت فيها واشيا فكأنني % % في صرم ذات الخال ، كنت مغمضا % % 19(@)(@@) % وسفاهة ب لمرء صرم صديقه % يرضي بهجرته العدو المبغضا : % 20(@)(@@) % إرجع فعاودها المساء فإنني % % أخشى من العادي بها أن يعرضا % % PageV01P281 البحر : هزج 1(@)(@@) % ألا حبذا نجد ، % ومن أسكنها أرضا % % 2(@)(@@) % وحيا حبذا ما هم % % ولو لي حقدوا البغضا % % 3(@)(@@) % ومن أجل الهوى أدني % % لمن لم أرضه معضا % % 4(@)(@@) % علقتك ناشئا ، حتى % % رأيت الرأس مبيضا % % 5(@)(@@) % فإن تتعاهدي ودي % % إذا تجدينه غضا % % 6(@)(@@) % على بخل ، وتصريد ، % وقبض نوالكم قبضا % % 7(@)(@@) % أهيم بذكركم لو أ % ن خيرا منكم بضا % % 8(@)(@@) % فيا عجبا لموقفنا % % يعاتب بعضنا بعضا ! % PageV01P282 البحر : خفيف تام 1(@)(@@) % طال من آل زينب الإعراض ، % للتعدي ، وما بنا الإبغاض % 2(@)(@@) % ووليدين كان علقها القلب ، % إلى أن علا الرؤوس البياض % 3(@)(@@) % حبلها عندنا متين ، وحبلي % % عندها واهن القوى أنقاض % 4(@)(@@) % نظرت يوم فرع لفت إلينا % % نظرة كان رجعها إيماض % 5(@)(@@) % حين قالت لموكب كمها الرم % % ل أطاعت له النبات الرياض : % 6(@)(@@) % عجن نحو الفتى البغال نحيي % % بما تكتم القلوب المراض % % 7(@)(@@) % وأحدثه ما تضمنت منه ، % إذ خلا اليوم للمسير المراض 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms61# % % PageV01P283 البحر : طويل 1(@)(@@) % ألم تسأل الأطلال والمتربعا ، % ببطن حليات ، دوارس بلقعا ؟ % 2(@)(@@) % إلى الشري من وادي المغمس بدلت % % معالمه وبلا ونكباء زعزعا % % 3(@)(@@) % فيبخلن أو يخبرن ب لعلم بعدما % % نكأن فؤادا كان قدما مفجعا % % 4(@)(@@) % بهند ، وأتراب لهند ، إذ الهوى % % جميع ، وإذ لم يخش أن يتصدعا % % 5(@)(@@) % وإذ نحن مثل الماء ، كان مزاجه % كما صفق الساقي الرحيق المشعشعا % % 6(@)(@@) % وإذ لا نطيع العاذلين ، ولا نرى % % لواش لدينا يطلب الصرم مطمعا % % 7(@)(@@) % تنوعتن حتى عاود القلب سقمه ، % وحتى تذكرت الحديث المودعا % % 8(@)(@@) % فقلت لمطريهن : ويحك ! إنما % % ضررت فهل تسطيع نفعا فتنفعا ؟ % 9(@)(@@) % وأشريت فاستشرى وإن كان قد صحا % % فؤاد بأمثال المها كان موزعا % % 10(@)(@@) % وهيجت قلبا كان قد ودع الصبا % % وأشياعه ف شفع عسى أن تشفعا % % PageV01P284 11(@)(@@) % لئن كان ما حدثت حقا فما أرى % % كمثل الألى أطريت في الناس أربعا % % 12(@)(@@) % فقال : تعال انظر ، فقلت : وكيف لي ؟ % أخاف مقاما أن يشيع فيشنعا % % 13(@)(@@) % فقال : كتفل ثم لتثم فأت باغيا % فسلم ولا تكثر بأن تتورعا % % 14(@)(@@) % فإني سأخفي العين عنك فلا ترى % % مخافة أن يفشو الحديث ، فيسمعا % % 15(@)(@@) % فأقبلت أهوي مثل ما قال صاحبي % % لموعده أزجي قعودا موقعا % % 16(@)(@@) % فلما توافقنا ، وسلمت ، أشرقت % % وجوه زهاها الحسن أن تتقنعا % % 17(@)(@@) % تبالهن ب لعرفان لما رأينني % % وقلن : امرؤ باغ أكل وأوضعا ! % 18(@)(@@) % وقربن أسباب الصبا لمتيم % يقيس ذراعا كلما قسن إصبعا % % 19(@)(@@) % فلما تنازعن الأحاديث ، قلن لي : % أخفت علينا أن نغر ونخدعا ؟ % 20(@)(@@) % فب لأمس أرسلنا بذلك خالدا % إليك وبينا له الشأن أجمعا % % PageV01P285 21(@)(@@) % فما جئتنا إلا على وفق موعد ، % على ملإ منا خرجنا له معا % % 22(@)(@@) % رأينا خلاء من عيون ومجلسا % دميث الربى ، سهل المحلة ، ممرعا % % 23(@)(@@) % وقلنا : كريم نال وصل كرائم ، % فحق له في اليوم أن يتمتعا % % PageV01P286 البحر : طويل 1(@)(@@) % غشيت بأذناب المغمس منزلا % به للتي نهوى مصيف ومربع % 2(@)(@@) % مغاني أطلال ، ونؤيا ، ودمنة ، % أضر بها وبل ونكباء زعزع % 3(@)(@@) % بخبت حليات كأن رسومها % % كتاب زبور في عسيب مرجع % 4(@)(@@) % فهاج عليك الشوق رسم معطل ، % أحال زمانا ، فهو بيداء بلقع % 5(@)(@@) % فإن يقو مغناه ، فقد كان حقبة % أنيسا به حور المدامع روع % 6(@)(@@) % ليالي إذ أسماء رؤد كأنها % % خلي بذي المسروح 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms62# أدماء متبع % % 7(@)(@@) % لها رشأ تحنو عليه بجيدها % % أغن أجم المقلتين مولع % 8(@)(@@) % إذا فقدته ساعة عند مرتع ، % تراها عليه بالبغام تفجع % % 9(@)(@@) % تكاد عليه النفس منها مخافة % عليه الذئاب العاديات تقطع % % 10(@)(@@) % يذكرنيها كل تغريد قينة % وقمرية ظلت على الأيك تسجع % PageV01P287 11(@)(@@) % يجاوبها ساق هتوف لدى الضحى % % على غصن أيك بالبكاء يروع % % 12(@)(@@) % لقد خلعت في أخذها بردائه % جهارا وما كانت بعهدي تخلع % 13(@)(@@) % ومدت لدى البيت العتيق بثوبه % نهارا ، فما يدري بها كيف يصنع % % 14(@)(@@) % يظل إذا أجمعت صرما مباينا % دخيل لها في أسود القلب يشفع % % 15(@)(@@) % تذكرت إذ قالت غداة سويقة % ومقلتها من شدة الوجد تدمع % % 16(@)(@@) % لأترابها : ليت المغيري إذ دنت % به داره منا أتى فيودع % 17(@)(@@) % فما رمتها ، حتى دخلت فجاءة % عليها وقلبي عند ذاك يروع % 18(@)(@@) % فقلن حذاره العين لما رأينني % % لها ، إن هذا الأمر أمر مشنع % 19(@)(@@) % فلما تجلى الروع عنهن قلن لي : % هلم ، فما عنها لك اليوم مدفع % % 20(@)(@@) % فظلت بمرأى شائق وبمسمع ، % ألا حبذا مرأى هناك ومسمع ! % PageV01P288 البحر : طويل 1(@)(@@) % لقد حببت نعم إليها بوجهها % % مسافة ما بين الوتائر فالنقع % 2(@)(@@) % ومن أجل ذات الخال أعملت ناقتي % % أكلفها سير الكلال مع الظلع % 3(@)(@@) % ومن اجل ذات الخال يوم لقيتها % % بمندفع الاخباب ، سابقني دمعي % % 4(@)(@@) % ومن اجل ذات الخال آلف منزلا ، % تحل به لا ذا صديق ولا زرع % 5(@)(@@) % ومن أجل ذات الخال عدت كأنني % % مخامر داء داخل وأخو ربع % 6(@)(@@) % ألم تر ذات لخال أن مقالها % % لدى الباب ، زاد القلب ردعا على ردع % % 7(@)(@@) % وأخرى لدى البيت العتيق نظرتها % % إليها تمشت في عظامي وفي سمعي % % 8(@)(@@) % فما انس ملأشياء لا أنس نظرتي % % إليها وتربيها ونحن لدى سلع % PageV01P289 البحر : طويل 1(@)(@@) % وقالت لتربيها غداة لقيتها ، % ومقلتها بالماء ، والكحل ، تدمع : % 2(@)(@@) % بذي الشري هل من موقف تقفانه % لعل المغيري الغداة يودع % 3(@)(@@) % فلما رأت كبراهما ما بأختها % % أرمت فما تعطي ولاع هي تمنع % 4(@)(@@) % وقال لها الصغرى : هداك لما رأى % % هوى غير معصي ، ولب مشيع % % 5(@)(@@) % أيخفى على ظهر وقوف مطية % براكبها ؟ هذا من الأمر أشنع ! % PageV01P290 البحر : طويل 1(@)(@@) % أقول لأسماء اشتكاء ، ولا أرى ، % على أثر شيء قد تفاوت ، مجزعا : % 2(@)(@@) % ألم 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms63# تعلمي ، يا أسم ، أني مغاضب % أحب جميع الناس لو جمعوا معا ؟ % 3(@)(@@) % وأن الليالي طلن منذ هجرتني ، % وكن قصارا قبل أن نتصدعا ؟ % 4(@)(@@) % وأن لم نزل منذ هتجرنا كأنني % % معاد فراشي ، ما ألايم مضجعا ؟ % PageV01P291 البحر : طويل 1(@)(@@) % أربت إلى هند وتربين ، مرة ، % لها ، إذ توافقنا بقرن المقطع % 2(@)(@@) % لتعريج يوم أو لتعريس ليلة % علينا بجمع الشمل قبل التصدع % 3(@)(@@) % فقلن لها : لولا رتقاب صحابة % لنا خلفنا ، عجنا ولم نتورع % % 4(@)(@@) % فقالت فتاة ، كنت أحسب أنها % % مغفلة ، في مئزر لم تدرع % % 5(@)(@@) % لهن وما شاورنها ليس ما أرى % % بحسن جزاء للحبيب المودع % % 6(@)(@@) % فقلن لها : لا شب قرنك ف فتحي % % لنا بابة تخفي من الأمر نسمع % 7(@)(@@) % فقالت لهن : الأمر باد طريقه ، % مبين لذي لب ينوء بمرجع % 8(@)(@@) % نقدم من يخشى فيمضي أمامنا ، % ومن خفت من أصحاب رحلك فارجعي % % 9(@)(@@) % وأوصي غلاما بالوقوف بجانب ال % % ستار ، خفيا شخصه ، يتسمع % % 10(@)(@@) % فإن ير مما يتقى غير رقبة % علينا ، يعجل ما استطاع ويسرع % % PageV01P292 البحر : طويل 1(@)(@@) % ألا من يرى رأي امرىء ذي قرابة ، % أبت نفسه ب لبغض إلا تطلعا % % 2(@)(@@) % وما ذاك من شيء أكون جتنيته % إليك وما حاولت سوءا فيمنعا % % 3(@)(@@) % وكان ابن عم المرء مثل مجنه ، % يقيه ، إذا لاقى الكمي المقنعا % % 4(@)(@@) % إذا ما ابن عم المرء أفرد ركنه ، % وإن كان جلدا ذا عزاء تضعضعا % % 5(@)(@@) % فنصرك أرجو ، لا العداوة ، إنما % % أبوك أبي ، وإنما صفقنا معا % % 6(@)(@@) % وإن كان للعتبى ، فأهل قرابة ، % وإن كان هذا لانتقاص ، فمصرعا % % 7(@)(@@) % فهذا عتاب وازدجار ، فإن يعد % وجدك ، أدرك ما تسلفت أجمعا % % 8(@)(@@) % فإن يوسر المولى فإنك حاسد % وإن يفتقر لا يلف عندك مطمعا % % 9(@)(@@) % وإن هو يظلم لا تدافع بحجة % وإن هو يظلم قلت جنبك أضرعا % % PageV01P293 البحر : طويل 1(@)(@@) % يا قلب أخبرني وفي النأي راحة % إذا ما نوت هند نوى : كيف تصنع ؟ % 2(@)(@@) % أتجمع يأسا ، أم تحن صبابة ، % على إثر هند ، حين بانت ، وتجزع ؟ % 3(@)(@@) % وللصبر خير ، حين بانت بودها ، % وزجر فؤاد كان للبين يخشع % 4(@)(@@) % وقد قرعت في وصل هند لك العصا % % قديما كما كانت لذي الحلم تقرع % 5(@)(@@) % جزعت وما في فجع هند بسرها % % وإفشاء سر كان نحوي 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms64# تجزع % 6(@)(@@) % ولكن على أن يعلم الناس أنني % % على غير شيء من نوالك أتبع % 7(@)(@@) % فلا تحرمي نفسا عليك مضيقة % وقد كربت من شدة الوجد تطلع % 8(@)(@@) % وليس بحب غير حبيك لذة % % ولست بشخص بعد شخصك أجزع % % 9(@)(@@) % وليس خليلي ب لمرجى وصاله % وليس لسري عند غيري موضع % % PageV01P294 البحر : طويل 1(@)(@@) % طمعت بأمر ليس لي فيه مطمع % فأخلفني ، فالعين من ذاك تدمع % 2(@)(@@) % وباعدني من لا أحب بعاده % فنفسي عليه كل حين تقطع % 3(@)(@@) % وقد كنت أرجو أن تجود بنائل % فألفيتها ب لبذل لا تتطوع % 4(@)(@@) % فوا كبدي من خشية البين بعدما % % رجوت نوالا من عثيمة ينفع % % 5(@)(@@) % فقد تركتني ما ألذ لخلة % حديثا ، ونفسي نحوها تتطلع % % PageV01P295 البحر : كامل تام 1(@)(@@) % إن الخليط مع الصباح تصدعوا % % ف لقلب مرتهن بزينب موجع % 2(@)(@@) % أشكو إلى بكر وقد جزعت بها % % بغلاتها خوص النواصف ترفع % 3(@)(@@) % قالوا بمر اليوم ، ثم مبيتهم % % ضحيان أو عسفان إن هم أسرعوا % % 4(@)(@@) % حتى إذا جسروا بصارع كلها ، % وبدا لهم منها طريق مهيع % 5(@)(@@) % فأتيتهم عند العشاء مخاطرا % حذر الانيس ، وليس شيئا يسمع % % 6(@)(@@) % أقبلت أخفي مشيتي متقنعا % وأخو الخفاء إذا مشى يتقنع % 7(@)(@@) % فأتيت حين تضجعوا بعد الونى % % من سيرهم ، أو قبل أن يتضجعوا % % 8(@)(@@) % فإذا ثلاث بينهن عقيلة % مثل الغمامة ، نشرها يتضوع % % 9(@)(@@) % فعرفت صورتها ، وليس بمنكر % أحد شعاع الشمس ساعة تطلع % 10(@)(@@) % قالت : نشدتك ، يا لباب ، ألم يكن % كبر المنى ، وبه حديثي أجمع ؟ % PageV01P296 11(@)(@@) % قالت : بلى ، فعجبت ، حين لقيتها ، % من قولها : ليت النوى بك تجمع % PageV01P297 البحر : كامل تام 1(@)(@@) % ناد الذين تحملوا كي يربعوا % % كي ما يودع ذو هوى ويودع % 2(@)(@@) % ما كنت اخشى ، بعدما قد اجمعوا ، % وفراقهم ب لكره أن لا يربعوا % % 3(@)(@@) % أن يفجعوا دنفا مصابا قلبه % % من حبهم في كل يوم يردع % 4(@)(@@) % حتى رأيت حمولهم ، وكأنها % % نخل تكفكفها شمال زعزع % 5(@)(@@) % وأقول من جزع لعزة ، بعدما % % ساروا وسال بهم طريق مهيع % 6(@)(@@) % لو كنت أملك دفع ذا لدفعته % عني ، ولكن ما لهذا مدفع % % 7(@)(@@) % لما تذاكرنا وقد كادت بهم % يزل الجمال ببطن قرن تطلع % % 8(@)(@@) % تهوي بهن ، إذا الحداة ترنموا % % مورا كما مار السفين المقلع % 9(@)(@@) % سلمت ، فالتفتت بوجه واضح 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms65# ، % كالبدر زين ذاك جيد أتلع % % 10(@)(@@) % وبمقلتي ريم غضيض طرفه ، % أضحى له برياض مر مرتع % % PageV01P298 11(@)(@@) % قالت : تشيعنا ، فقلت صبابة : % إن المحب لمن يحب مشيع % 12(@)(@@) % ف سترجعت وبكت لما قد غالها % % إن الموفق ف علموا مسترجع % 13(@)(@@) % فتبعتهم ، ومعي فؤاد موجع ، % صب بقربهم ، وعين تدمع % % PageV01P299 البحر : كامل تام 1(@)(@@) % ومشاحن ذي بغضة ، وقرابة ، % يزجي لأقربه عقارب لسعا % % 2(@)(@@) % يسعى ليهدم ما بنيت ، وإنني % % لمشيد بنيانه المتضعضعا % % 3(@)(@@) % وإذا سررت ، يسوءه ما سرني ، % ويرى المسرة مروتي أن تقرعا % % 4(@)(@@) % وإذا عثرت ، يقول : إني شامت ، % وأقول ، حين أراه يعثر : دعدعا % % PageV01P300 البحر : بسيط تام 1(@)(@@) % إذهب ، وقل للتي لامت ، وقد علمت % % إن لم تنل في ثوابي طائلا تدع % 2(@)(@@) % بعض الملامة في أن لا أصاحبها % % كيما تدارك أمرا غير مرتجع % % 3(@)(@@) % لا ترحليني بذنب أنت صاحبه % وصادقيني صفاء الود و ستمعي % % 4(@)(@@) % لا تسمعن بنا قول الوشاة ، ومن % يطع مقالة واش كاشح يضع % 5(@)(@@) % ليس الخديعة من سري ومن خلقي % % وإن يشار بأدنى الأمر ، يمتنع % % PageV01P301 البحر : خفيف تام 1(@)(@@) % أصبح القلب للقتول صريعا ، % مسهاما ، بذكرها ، مردوعا % % 2(@)(@@) % سلبتني عقلي غداة تبدت % بين خودين ك لغزالين ريعا % % 3(@)(@@) % وهي كالشمس إذ بدت في ضحاها % % فأبانت للناظرين طلوعا % % 4(@)(@@) % فرمتني بسهمها ، ثم دلفت % لبنات الفؤاد سما نقيعا % % 5(@)(@@) % لمت قلبي في حبها ، فعصاني ، % ولقد كان لي زمانا مطيعا % % 6(@)(@@) % فأرى القلب ، قد تنشب فيه % % حب هند فما يريد نزوعا % % 7(@)(@@) % قاده الحين نحوها ، فأتاها % % غير عاص إلى هواها سريعا % % 8(@)(@@) % قلت ، لما تخلس الوجد عقلي ، % لسليمى دعي رسولا مريعا % % 9(@)(@@) % فابعثيه ، فأخبريه بعذري ، % و شفعي لي فقد غنيت شفيعا % % 10(@)(@@) % عند هند ، وذاك عصر تولى ، % بان منا ، فما يريد رجوعا % % PageV01P302 11(@)(@@) % فأتتها فأخبرتها بعذري % % ثم قالت : أتيت أمرا بديعا % % 12(@)(@@) % فاقبلي العذر ، مت قبلك ، منه ، % وهي تذري لم عناها الدموعا % % 13(@)(@@) % فأصاخت لقولها ثم قالت % عاد هذا من الحديث رجيعا % % 14(@)(@@) % ارجعي نحوه فقولي : وعيشي % % لا تهنأ ، بما فعلت ، ربيعا ! % 15(@)(@@) % خلت أنا نغير الوصل منا % % عنك أم خلت حبلنا مقطوعا ؟ % 16(@)(@@) % فأتتني فأخبرتني بأمر % شف جسمي وطار قلبي مروعا % % 17(@)(@@) % فرجعت الرسول بالعذر مني ، % نحو هند ولم أخف أن تريعا % % 18(@)(@@) % فحيينا بودها ، بعد 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms66# يأس ، % من هواها فعاد ودا جميعا % % PageV01P303 البحر : منسرح 1(@)(@@) % قرب جيراننا جمالهم % ليلا ، فاضحوا معا قد اندفعوا % % 2(@)(@@) % ما كنت ادري بوشك بينهم % حتى رأيت الغداة قد طلعوا % % 3(@)(@@) % على مكصين من جمالهم ، % وعنتريسين فيهما شجع % 4(@)(@@) % قد كاد قلبي والعين تبصرهم % لما تواروا بالغور ، ينصدع % % 5(@)(@@) % يا قلب ، صبرا ، فإنه سفه % بالمرء أن يستفزه الجزع % % 6(@)(@@) % ما ودعونا كما زعمت ولا % من بعد أن فارقوا ، لنا طمع % % 7(@)(@@) % هل يبلغنها السلام أقربها % % عني وإن يفعلوا فقد نفعوا % % 8(@)(@@) % ما إن أردنا وصال غيرهم % ولا قطعناهم كما قطعوا % % 9(@)(@@) % ولا ضننا عنهم بنائلنا % % ولا خشينا التي بها وقعوا % % 10(@)(@@) % حتى جفونا ونحن نتبعهم % أليس ، بالله ، بئس ما صنعوا ؟ % PageV01P304 البحر : وافر تام 1(@)(@@) % ألا يا أيها الواشي بهند % أضري رمت أم حاولت نفعي ؟ % 2(@)(@@) % أقلت الرشد صرم حبال هند % ما أن ما أتيت به ببدع % 3(@)(@@) % أتأمر بالفجيعة ذا صفاء % كريم الوصل لم يهمم بفجع ! % 4(@)(@@) % وأقعد بعد قطع الحبل أدعو % % إلى صلة وقطع الحبل صنعي ؟ % PageV01P305 البحر : وافر تام 1(@)(@@) % أيا من كان لي بصرا وسمعا % وكيف الصبر عن بصري وسمعي ؟ % 2(@)(@@) % يجن بذكرها أبدا فؤادي % % يفيض كما يفيض الغرب دمعي % % 3(@)(@@) % يقول العاذلون نأت فدعها % % وذلك حين تهيامي وولعي % % 4(@)(@@) % أأهجرها ، وأقعد لا أراها ، % وأقطعها وما همت بقطعي % % 5(@)(@@) % وأقسم ، لو حلمت بهجر هند ، % لضاق بهجرها في النوم ذرعي % % PageV01P306 البحر : رمل تام 1(@)(@@) % يا خيليل ، إذا لم تنفعا ، % فدعاني اليوم من لوم دعا % % 2(@)(@@) % وألما بي بظبي شادن ، % لست أدري اليوم ماذا صنعا % % 3(@)(@@) % قد جرى ب لبين منها طائر % رف بالفرقة ثم آرتفعا % % 4(@)(@@) % سألتني : هل تركت اللهو أم % ذهبت أزمانه ف نقطعا % % 5(@)(@@) % قلت : لا بل ذهب الدهر الذي % % كنت أسعى معه حيث سعى % % 6(@)(@@) % ذاك إذ نحن وسلمى جيرة % لا نبالي من وشى ، أو سمعا % % 7(@)(@@) % لو سعى من فوقها ، من خلقه ، % بيننا بالصرم شتى ، ومعا % % 8(@)(@@) % كان قصدي عندها ، في قولهم ، % أن أكون المكرم المتبعا % % 9(@)(@@) % حين قالت : كيف أسلو بعدما % % سمع اليوم بنا من سمعا % % PageV01P307 البحر : مجزوء الرمل 1(@)(@@) % علق القلب وزوعا % % حب من لم يستطيعا % % 2(@)(@@) % علق الشمس فأضحت % أوجه الناس جميعا % % 3(@)(@@) % ودعاه الحين 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms67# ف نقا % % د إلى الحين سريعا % % 4(@)(@@) % ثم أبصرت التي زا % % دت على الشمس بروعا % % 5(@)(@@) % وترى النسوان إن قا % % مت وإن قمن خشوعا % % 6(@)(@@) % كخضوع النجم للشم % % س ، إذا رامت طلوعا % % 7(@)(@@) % ولقد قلت على فو % ت وكفكفت الدموعا % % 8(@)(@@) % جزعا ، ليلة مرت % بي وما كنت جزوعا % % 9(@)(@@) % أسفرت ليلة ودان ، % ن حذارا أن تروعا % % 10(@)(@@) % قلب محزون بها ما % % زل مختلا وجيعا % % PageV01P308 11(@)(@@) % فأرته وارد النب % % ت ومنتصا تليعا % % 12(@)(@@) % وثنايا يكرع المل % هوف فيهن كروعا % % 13(@)(@@) % يوم حلت ، من سوا % % د القلب ، محتلا رفيعا : % 14(@)(@@) % هل رأيت الركب ، أو % صرت بالقاع هجوعا % % 15(@)(@@) % قال : لم أعرف ، وقد % % أبصرت عيسا وقطوعا % % 16(@)(@@) % قلت : اذهب ف عترفهم % ثم أدركنا جميعا % % 17(@)(@@) % قف على الركب فسلم % ثم أدركنا سريعا % % 18(@)(@@) % فلقد كنت قديما ، % لهوى النفس تبوعا % % PageV01P309 البحر : مديد تام 1(@)(@@) % إن همي قد نفى النوم عني ليت شعري هل أقولن لركب % بفلاة هم لديها هجوع % 2(@)(@@) % طالما عرستم ، فاركبوا بي ، % حان من نجم الثريا طلوع % 3(@)(@@) % إن همي قد نفى النوم عني ، % وحديث النفس قدما ولوع % 4(@)(@@) % قال لي فيها عتيق مقالا ، % فجرت مما يقول الدموع % 5(@)(@@) % قال لي : ودع سليمى ، ودعها ، % فأجاب القلب أن لا أطيع % 6(@)(@@) % لا شفاني الله منها ولكن % زيد في القلب عليها صدوع % 7(@)(@@) % لاتلمني في اشتياقي إليها ، % وابك لي مما تجن الضلوع % % PageV01P310 البحر : سريع 1(@)(@@) % قالت وعيناها تجودانها : % صوحبت والله لك الراعي ! % 2(@)(@@) % يا ابن سريج ، لا تذع سرنا ، % قد كنت عندي غير مذياع % % PageV01P311 البحر : طويل 1(@)(@@) % أيا رب لا آلو المودة جاهدا % لأسماء ، فاصنع بي الذي أنت صانع % PageV01P312 البحر : وافر تام 1(@)(@@) % وخل كنت عين النصح منه % إذا نظرت ومستمعا مطيعا % % 2(@)(@@) % أطاف بغية فنهيت عنها % % وقلت له : أرى أمرا شنيعا % % 3(@)(@@) % أردت رشاده جهدي فلما % % أبى وعصى ، أتيناها جميعا % % PageV01P313 البحر : طويل 1(@)(@@) % أرائحة حجاج عذرة وجهة % ولما يرح في القوم جعد بن مهجع % 2(@)(@@) % خليلان نشكو ما نلاقي من الهوى % % متى ما يقل ، أسمع ، وإن قلت يسمع % % 3(@)(@@) % ألا ليت شعري ، أي شيء أصابه ، % فلي زفرات هجن ما بين أضلعي % % 4(@)(@@) % فلا يبعدنك الله خلا فإنني % % سألقى كما لاقيت في كل مصرع % PageV01P314 البحر : متقارب 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms68# تام 1(@)(@@) % وإني لسائل أم الربيع ، % ع قبل الوداع متاعا طفيفا % % 2(@)(@@) % متاعا ، اقوم به للوداع ، إني % % ع إني أرى الدار منها قذوفا % % 3(@)(@@) % فقالت : بحاجة كل نطقت % فأقبل وأرسل رسولا لطيفا % % 4(@)(@@) % إلى موعد ود لو أنه % % خلا ، لا يروع فيه الطروفا % % 5(@)(@@) % ومن عجب ضحكت إذ رأت % قريبة ب لخيف ركبا وقوفا % % 6(@)(@@) % رأت رجلا شاحبا جسمه % مساري أرض أطال الوجيفا % % 7(@)(@@) % أخا سفر لا يجم المطي ، % بعد الكلالة ، إلا خفوفا % % 8(@)(@@) % فإما تريني كساني السفار % لون السواد ، وجسما نحيفا % % 9(@)(@@) % فحورا كمثل ظباء الخري % % ف أخرجن يمشين مشيا قطوفا % % 10(@)(@@) % تضوع أردانهن العبير والرن % % ر والرند خالط مسكا مدوفا % % PageV01P315 11(@)(@@) % يهيجن من بردات القلوب % % شوقا ، إذا ما ضربن الدفوفا % % 12(@)(@@) % إذا ما انقضى عجب ، لم يزلن % يدعون للهو قلبا ظريفا % % 13(@)(@@) % بأبطح سهل سقاه السحا % % ب إما ربيعا وإما خريفا % % PageV01P316 البحر : طويل 1(@)(@@) % ولو كان يخفى الحب سوما ، خفي لنا ، % ولكنه والله ، يا حب ، ما يخفى % % 2(@)(@@) % ولكن عدمت الحب إن كان هكذا ، % إذا ما أحب المرء كان له حتفا % % 3(@)(@@) % فما استجملت نفسي حديثا لغيرها ، % وإن كان لحنا ، ما تحدثنا خلفا % % 4(@)(@@) % ولا ذكرت يا صاح إلا وجدتها % % بودي ، وإلا زاد حبي لها ضعفا % % 5(@)(@@) % ولا أبصرت عيناي في الناس عاشقا ، % صبا صبوة إلا صبوت لها ألفا % % 6(@)(@@) % فما عدلت في الحكم يا صاح بيننا ، % أفي العدل منها أن نحب وأن نجفى % % PageV01P317 البحر : مجزوء الرجز 1(@)(@@) % هاج فؤادي موقف % ذكرني ما أعرف % 2(@)(@@) % ممشاي ذات ليلة ، % والشوق مما يشغف % 3(@)(@@) % إذا ثلاث كالدمى ، % وكاعب ومسلف % 4(@)(@@) % وبينهن صورة ، % ك لشمس حين تسدف % 5(@)(@@) % خود ، وقير نصفها ، % ونصفها مهفهف % % 6(@)(@@) % قلت لها : من أنتم ؟ % لعل دارا تسعف % % 7(@)(@@) % ف بتسمت عن واضح % غر الثنايا ، ينطف % % 8(@)(@@) % وأومضت عن طرفها % % يا حسنها ، إذ تطرف ! % 9(@)(@@) % وأرسلت فجاءني % % بنانها المطرف % % 10(@)(@@) % أن بت لدينا ليلة % نحيي بها ونلطف % PageV01P318 11(@)(@@) % باتت ولي من بذلها % % حمش اللثات ، أعجف % % 12(@)(@@) % فبت ليلي كله % ترشفني ، وأرشف % 13(@)(@@) % إخال ثلجا طعمه % قد خالطته قرقف % % 14(@)(@@) % لما دنا تقارب % من ليلنا ومصرف % 15(@)(@@) % قالت لنا ، ودمعها % % وجدا علينا يذرف : % 16(@)(@@) % لهفي ! وليس نافعي % % عليكم التلهف ! % 17(@)(@@) % قالت : ولم تسألنا % % والدار عنك 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms69# تصرف % % 18(@)(@@) % والدار عنك غربة ، % ونأينا مستشرف % % 19(@)(@@) % نحن حجيج ضمنا ، % فمن يرى المعرف % 20(@)(@@) % قلت : فإني هائم % صب بكم مكلف % % PageV01P319 21(@)(@@) % قالت : بل انت مازح ، % ذو ملة ، مستطرف % % 22(@)(@@) % لسنا وإن حدثتنا % % يغرنا ما تحلف % 23(@)(@@) % وددت لو انك في % % قولك هذا تنصف % 24(@)(@@) % تجزي بمثل ودنا % % قلت لها : بل أضعف % % PageV01P320 البحر : طويل 1(@)(@@) % أفي رسم دار دارس أنت واقف % بقاع تعفيه الرياح العواصف % 2(@)(@@) % بها جازت الشعثاء فالخيمة التي % % قفا محرض كأنهن صحائف % % 3(@)(@@) % سحا تربها أرواحها فكأنما % % أحال عليها بالرغام النواسف % % 4(@)(@@) % وقفت بها لا من أسائل ناطق ، % ولا أنا إن لم ينطق الرسم صارف % 5(@)(@@) % ولا أنا عمن يألف الربع ذاهل % ولا التبل مردود ولا القلب عازف % 6(@)(@@) % ولا أنا ناس مجلسا زارنا به % عشاء ثلاث كاعبان وناصف % 7(@)(@@) % أسيلات أبدان دقاق خصورها % % وثيرات ما التفت عليه الملاحف % 8(@)(@@) % إذا قمن ، أو حاولن مشيا تأطرا ، % إلى حاجة مالت بهن الروادف % 9(@)(@@) % نواعم لم يدرين ما عيش شقوة % ولا هن نمات الحديث زعانف % 10(@)(@@) % إذا مسهن الرشح أو سقط الندى % % تضوع بالمسك السحيق المشارف % % PageV01P321 11(@)(@@) % يقلن إذا ما كوكب غار : ليته % بحيث رأيناه عشاء يخالف % 12(@)(@@) % لبثنا به ليل التمام بلذة ، % نعمنا به حتى جلا الصبح كاشف % 13(@)(@@) % فلما هممنا بالتفرق ، أعجلت % بقايا البانات الدموع الذوارف % 14(@)(@@) % وأصعدن في وعث الكثيب تأودا ، % كما جتاز في الوحل النعاج الخوارف % 15(@)(@@) % فأتبعتهن الطرف ، متبل الهوى ، % كأني يعانيني من الجن خاطف % 16(@)(@@) % تعفي على الآثار ، أن تعرف الخطى ، % ذيول ثياب يمنة ومطارف % 17(@)(@@) % دعاه إلى هند تصاب ونظرة % تدل على أشياء فيها متالف % 18(@)(@@) % سبته بوحف في العقاص ، كأنه % عناقيد دلاها من الكرم قاطف % 19(@)(@@) % وجيد خذول بالصريمة ، مغزل ، % ووجه حمي أضرعته المخالف % % 20(@)(@@) % فكل الذي قد قلت يوم لقيتكم % على حذر الأعداء ، للقلب شاغف % % PageV01P322 21(@)(@@) % وحبك داء للفؤاد مهيج % سفاها إذا ناح الحمام الهواتف % 22(@)(@@) % ونشرك شاف للذي بي من الجوى ، % وذكرك ملتذ ، على القلب طارف % % 23(@)(@@) % وقربك إن قاربت للشمل جامع % وإن بنت يوما بان من أنا آلف % 24(@)(@@) % فإن راجعته في التراسل ، لم يزل % له من أعاجيب الحديث طرائف % % 25(@)(@@) % وإن عاتبته مرة ، كان قلبه % لها ضلعه حتى تعود 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms70# العواصف % % 26(@)(@@) % فكل الذي قد قلت كان دكاره % على القلب قرحا ينكأ القلب ، قارف % % 27(@)(@@) % أثيبي ابنة المكني عنه بغيره ، % وعنك سقاك الغاديات الروادف % 28(@)(@@) % على أنها قالت لأسماء : سلمي % % عليه ، وقولي : حق ما أنت خائف % % 29(@)(@@) % أرى الدار قد شطت بنا عن نوالكم % نوى غربة ، فانظر لأي تساعف % % 30(@)(@@) % فقلت : أجل لا شك قد نبأت به % ظباء جرت ، فاعتاف من هو عائف % % PageV01P323 31(@)(@@) % فقالت لها : قولي : ألست بزائر % بلادي وإن قلت هناك المعارف % 32(@)(@@) % كما لو ملكنا أن نزور بلادكم % فعلنا ولم تكثر علينا التكالف % 33(@)(@@) % فقلت لها : قولي لها : قل عندنا % % لنا جشم الظلماء فيما نصادف % 34(@)(@@) % ونصي إليك العيس ، شاكية الوجى % % مناسمها مما تلاقي رواعف % 35(@)(@@) % براهن نصي والتهجر كلما % % توقد مسموم من اليوم صائف % % 36(@)(@@) % تحسر عنهن العرائك ، بعدما % % بدأن وهن المقفرات العلائف % 37(@)(@@) % وإني زعيم أن تقرب فتية % إليك معيدات السفار ، عواطف % % PageV01P324 البحر : متقارب تام 1(@)(@@) % لقد أرسلت حولا قلبا % يرى جافيا وهو خب لطيف % 2(@)(@@) % إلينا عشاء بأن قف لنا % % نسلم ، فإن وقوفا طفيف % 3(@)(@@) % فقلت لها : البيت أخلى لنا ، % فإن مقام الفجاج الحتوف % 4(@)(@@) % فقالت : صدقت ، ولكنني % % أخاف العداة ، ومشيي قطوف % % PageV01P325 البحر : رمل تام 1(@)(@@) % لإتني ، إن كنت ثقفا شاعرا ، % عن فتى أعوج ، اعمى ، مختلف % 2(@)(@@) % سيىء السحنة ، كاب لونه ، % مثل عود الخروع البالي القصف % PageV01P326 البحر : كامل تام 1(@)(@@) % بان الخليط وبينهم شغف % الدار احيانا بهم قذف % 2(@)(@@) % ما عودوك بنأي دارهم ، % قرب الجوار ، ففيم تلتهف ؟ % 3(@)(@@) % ولقد ترى أن لا يذللها % % أن الفؤاد بذكرها كلف % 4(@)(@@) % زعموا بأن البين بعد غد ، % ف لقلب مما أحدثوا يجف % 5(@)(@@) % لم أنس موقفنا وموقفها ، % لتراجع ولحيننا نقف % 6(@)(@@) % نشكو وتشكو بعض ما وجدت ، % كل لوشك البين معترف % 7(@)(@@) % ومقالها ودموعها سجم : % أقلل حنينك حين تنصرف % 8(@)(@@) % عنا ، إذا دار بكم نزحت % ودعا لأخرى قلبك الطرف % % 9(@)(@@) % حلفوا ، لقد قطعوا ببينهم % وحلفت ألفا مثلما حلفوا % % PageV01P327 البحر : طويل 1(@)(@@) % لقد عجت في رسم أجد زمانه % % لنا ، دارس ما كان غير التواقف % 2(@)(@@) % عشية قالت : قد أشاد بسرنا % % وسركم مجرى الدموع الذوارف % 3(@)(@@) % فقلت لها : إني أرى بكم النوى % % عنوجا متى نرجو قتراب المخالف % 4(@)(@@) % فلما تواقفنا ، تحير حولها 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms71# % % نواعم ك لغزلان بيض السوالف % 5(@)(@@) % وثيرات أعجاز ، دقاق خصورها ، % طويلات أعناق ، ثقال الروادف % % 6(@)(@@) % يطفن بها مثل الدمى بين سافر % إلينا ، ومستحي رآنا ، فصارف % % 7(@)(@@) % وجاءت بتباع لها بين منكر % لموقفنا ، لو يستطيع ، وعارف % PageV01P328 البحر : رمل تام 1(@)(@@) % ذات حسن إن تغب شمس الضحى % % فلنا من وجهها عنها خلف % 2(@)(@@) % أجمع الناس على تفضيلها % % وهواهم في سوى هذا ختلف % PageV01P329 البحر : طويل 1(@)(@@) % وطافت بنا شمس عشاء ، ومن رأى % % من الناس شمسا بالعشاء تطوف % 2(@)(@@) % أبو أمها أوفى قريش بذمة % وأعمامها ، إما نسبت ، ثقيف % PageV01P330 البحر : طويل 1(@)(@@) % فلم تر عيني مثل سرب رأيته % خرجن علينا من زقاق بن واقف % PageV01P331 البحر : خفيف تام 1(@)(@@) % ولقد قلت يوم بانوا لبكر : % أنت ، يا بكر ، سقتنا ذا المساقا % % 2(@)(@@) % أنت قربتني إلى الحين حتى % % حمل القلب منهم ما أطاقا % % 3(@)(@@) % ولقد قلت : لا أبا لك دعني % % إن حتفي في أن أزور الرفاقا % % 4(@)(@@) % إن قصري أن يشعر القلب سقما % ما من سليمى مخامرا واشتياقا % % 5(@)(@@) % قد أرانا ولا أسر بأن تج % مع دار ، ولا نبالي الفراقا % % 6(@)(@@) % ثم ولوا وما قرابة من حل % ل بنجد ممن يحل العراقا ؟ % PageV01P332 البحر : متقارب تام 1(@)(@@) % ألم تسأل الربع أن ينطقا ، % بقرن المنازل قد أخلقا ؟ % 2(@)(@@) % ديار لتي تيمت عقله % فيا ليته غيرها علقا ! % 3(@)(@@) % وكيف طلابي عراقية ، % وقد جاوزت عيرها الخرنقا % % 4(@)(@@) % تؤم الحداة بها منزلا ، % من الطف ذا بهجة مؤنقا % % 5(@)(@@) % وكيف طلابك إلا الصبا ، % وغرب النوى ، بلدا مسحقا % % 6(@)(@@) % ولو أنه إذ دعاه الصبا % % إليها أبى لم يكن أخرقا % % 7(@)(@@) % ولكنه قربته المنى ، % وسيق إلى الحين ف ستوسقا % % PageV01P333 البحر : طويل 1(@)(@@) % ألم خيال من سليمى فأرقا % % هدوءا ولم يطرق هنالك مطرقا % % 2(@)(@@) % ألم ببطحاء الكديد وصحبتي % % هجود ، فزاد القلب حزنا وشوقا % % 3(@)(@@) % فقلت لها : أهلا بكم إذ طرقتم ، % فقد زرت صبا ، يا قتيل ، مؤرقا % % 4(@)(@@) % فباتت تعاطيني عذابا حسبتها % % من الطيب ، مسكا أو رحيقا معتقا % % 5(@)(@@) % فبت قرير العين آخر ليلتي ، % ألاعب فيها واضح الجيد أعنقا % % 6(@)(@@) % فبتنا بتلك الحال إذ صاح ناطق % وبين معروف الصباح فصدقا % % PageV01P334 البحر : مجزوء الخفيف 1(@)(@@) % منع النوم ذكرة % من حبيب مفارق % 2(@)(@@) % نازح الدار عن ديارك % ري والقلب 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms72# شائقي % % 3(@)(@@) % سالكات عن البلا % % سراع النواهق % % 4(@)(@@) % فيهم بحترية ، % مثل عين المعانق % 5(@)(@@) % نولي أم خالد % قبل بين الصفائق % % 6(@)(@@) % إن قلبي أخاله % عنكم غير عائق % % PageV01P335 البحر : وافر تام 1(@)(@@) % أحب لحب عبلة كل صهر % علمت به لعبلة أو صديق % 2(@)(@@) % ولولا أن تعنفني قريش ، % وقول الناصح الادنى الشقيق % 3(@)(@@) % لقلت ، إذا التقينا ، قبليني ، % ولو كنا على ظهر الطريق ! % 4(@)(@@) % فما قلب ابن عبد الله فيها ، % % PageV01P336 البحر : طويل 1(@)(@@) % فلما لتقينا ، و طمأنت بنا النوى ، % وغيب عنا من نخاف ونشفق % 2(@)(@@) % أخذت بكفي كفها ، فوضعتها % % على كبد ، من خشية البين تخفق % % 3(@)(@@) % فقالت لأتراب لها ، حين أيقنت % بما قد ألاقي : إن ذا ليس يصدق % 4(@)(@@) % فقلن : أتبكي عين من ليس موجعا % كئيبا ، ومن هو ساهر الليل يأرق ؟ % 5(@)(@@) % فقالت : أرى هذا شتياقا ، وإنما % % دعا دمع القلب الخلي التشوق % % 6(@)(@@) % فقن : شهدنا أن ذا ليس كاذبا ، % ولكنه فيما يقول مصدق % % 7(@)(@@) % فقمن لكي يخليننا ، فترقرقت % مدامع عينيها ، فظلت تدفق % % 8(@)(@@) % فقالت : أما ترحمنني لا تدعنني % % لديه ، وهو فيما علمتن أخرق % % 9(@)(@@) % فقلن : سكتي عنا ، فغير مطاعة % لهو بك منا ، فاعلمي ذاك ، أرفق % % 10(@)(@@) % فقالت : فلا تبرحن ذا الستر ، إنني % % أخاف ، ورب الناس ، منه وأفرق % PageV01P337 البحر : خفيف تام 1(@)(@@) % أيها القلب ما أراك تفيق % طالما قد تعلقتك العلوق % 2(@)(@@) % هل لك اليوم ، إن نأت أم بكر % وتولت ، إلى عزاء طريق % 3(@)(@@) % من يكن من هوى حبيب قريبا % % فأنا النازح البعيد ، السحيق % 4(@)(@@) % قدر الحب بيننا ، فالتقينا ، % وكلانا إلى اللقاء مشوق % 5(@)(@@) % ف لتقينا ولم نخف ما لقينا % % ليلة الخيف ، والمنى قد تسوق % 6(@)(@@) % وجرى بينننا فقرب كلا % حول قلب اللسان رفيق % 7(@)(@@) % لا تظني أن التراسل والبذ % % ل بكل النساء عندي يليق % 8(@)(@@) % إن منهن للكرامة أهلا % والذي بينهن بون سحيق % PageV01P338 البحر : متقارب تام 1(@)(@@) % أهاجك ربع عفا مخلق ؟ % نعم ، ففؤادي مستعلق % 2(@)(@@) % لذكرة من قد نأت داره % فقلبي ، في رهنه ، موثق % 3(@)(@@) % يذكرني الدهر ما قد مضى % % من العيش ، فالعين تغرورق % 4(@)(@@) % ليالي أهلي ، وأهل التي % % دموعي بذكراهم تسبق % 5(@)(@@) % خليطان محضرنا واحد % فحبل المودى ة لا يخلق % 6(@)(@@) % لنا ولهند بجنب الغمي % % م ، مبدى ، ومنزلنا مؤنق % 7(@)(@@) % فإن يك ذاك الزمان نقضى 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms73# % % فحبلك من حبلها مطلق % 8(@)(@@) % فقد عشت في ما مضى لاهيا % بها ، والوصال بنا يعلق % % PageV01P339 البحر : كامل تام 1(@)(@@) % قل للمنازل من أثيلة ، تنطق % بالجزع جزع القرن لما تخلق : % 2(@)(@@) % حييت من طلل تقادم عهده % وسقيت من صوب الربيع المغدق % 3(@)(@@) % لتذكر الزمن الذي قد فاتنا % % أيام نبتعث الرسول ونلتقي % % 4(@)(@@) % إذ أنت رؤد في الشباب ، غريرة ، % غراء خود ، ك لغزال الأخرق % 5(@)(@@) % درما المرافق ، طيب أردانها ، % جسر الحقيبة ، بادن المتنطق % 6(@)(@@) % لا شيء أحسن من أثيلة ، إذ بدت ، % وقد احزألت عيرها لتفرق % 7(@)(@@) % وإذا رنت ، نطر النزيف ، بعينها ، % فعرفت حاجتها ، وإن لم تنطق % PageV01P340 البحر : متقارب تام 1(@)(@@) % فيا ويح قلبك ، ما يستفي % % ذكر هند ، وما ان يفيقا % % 2(@)(@@) % جعلت طريقي على بابكم % وما كان بابكم لي طريقا % % 3(@)(@@) % صرمت الأقارب من أجلكم ، % وصافيت من لم يكن لي صديقا % % 4(@)(@@) % وواددت أهل موداتها % % وعاضيت فيها النصيح الشفيقا % % PageV01P341 البحر : مجزوء الوافر 1(@)(@@) % ألا ، يا بكر ، قد طرقا % % خيال هاج لي الأرقا % % 3(@)(@@) % لهند ، إن ذكرتها % % ترى من شيمتي خلقا % % 6(@)(@@) % وحبا راضيا للقل % % ب ، لم أخلط به ملقا % % 7(@)(@@) % إذا ما زينب ذكرت % سكبت الدمع متسقا % % 8(@)(@@) % كأن سحابة ، تهمي % % إذا برزت ، ولا عنقا % % 10(@)(@@) % ترى إنسان مقلتها ، % % PageV01P342 البحر : خفيف تام 1(@)(@@) % أدخل الله ، رب موسى وعيسى ، % جنة الخلد من ملاني خلوقا % % 2(@)(@@) % مسحته من كفها بقميصي ، % حين طافت ب لبيت مسحا رفيقا % % 3(@)(@@) % غضبت أن نظرت نحو نساء ، % ليس يعرفنني ، سلكن الطريقا % % 4(@)(@@) % وأرى بينها وبين نساء ، % كنت أهذي بهن ، بونا سحيقا % % PageV01P343 البحر : منسرح 1(@)(@@) % إن الخليط الذين كنت بهم % صبا دعوا للفراق ف نطلقوا % % 2(@)(@@) % عصاهم من شتيت أمرهم % يوم الملا مستطيرة شقق % 3(@)(@@) % إستربعوا ساعة ، فأزعجهم % سيارة تسحق النوى ، قلق % % 4(@)(@@) % أتبعتهم مقلة مدامعها % % منها ، بماء الشون تستبق % 5(@)(@@) % تحسب مطروفة ، وما طرفت ، % إنسانها من دموعها شرق % 6(@)(@@) % بانوا بنعم ، فلست ناسيها ، % ما اهتز في غصن أيكة ورق % % 7(@)(@@) % آلفة للحجال واضحة % ب لعنبر الورد جلدها عبق % 8(@)(@@) % الظبي فيه من خلقها شبه : % النحر ، والمقلتان ، والعنق % % 9(@)(@@) % من عوهج فردة أطاع لها % % بمدفع السيل ناقع أنق % 10(@)(@@) % شيعها مطلقا ، وجاد لها % % منابت البقل ، كوكب غدق % PageV01P344 11(@)(@@) % يجهدها المشي للقريب ، كما % % ينهض 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms74# من الوعث مصعب لثق % % 12(@)(@@) % ويا لها خلة توافقنا % % أو صفقة ، بالديار ، تنصفق % % 13(@)(@@) % تعطي قليلا نزرا إذا سئلت ، % و لبخل فيها سجية خلق % 14(@)(@@) % فقد أرانا ، والدار جامعة ، % وليس في صفو عيشنا رنق % PageV01P345 البحر : طويل 1(@)(@@) % لعمري ، لو أبصرتني يوم بنتم ، % وعيني بجاري دمعها تترقرق % 2(@)(@@) % وكيف غداة البين وجدي ، وكيف إذ % % نأت داركم عن شدة الوجد آرق % 3(@)(@@) % لأيقنت أن القلب عان بذكركم ، % وأني رهين في حبالك موثق % 4(@)(@@) % فصدت صدود الرئم ، ثم تبسمت ، % وقالت لتربيها : اسمعا ، ليس يرفق ! % 5(@)(@@) % فقالت لها إحداهما : هو محسن ، % وأنت به ، فيما ترى العين ، أخرق % % 6(@)(@@) % وقالت لها الأخرى : ارجعيه بما اشتهى ، % فإن هواه بين حين ينطق % 7(@)(@@) % شفعنض إليها حين أبصرن عبرتي ، % وقلبي ، حذار العين ، منهن مشفق % % 8(@)(@@) % فلما تقضى الليل ، قالت فتاتها : % أرى قبل أن يستيقظ الحي أرفق % 9(@)(@@) % وعضت على إبهامها ، وتنكبت % قريبا ، وقالت : إن شرك ملحق % 10(@)(@@) % تبين هوى منا ، وتبدي شمائلا ، % ووجها له من بهجة الحسن رونق % % PageV01P346 11(@)(@@) % فألفت لها من خالص الود والهوى % % جديدا ، على شحط النوى ليس يخلق % 12(@)(@@) % لدى عاشق أحمى لها من فؤاده % % على مسرح ذي صفوة لا يرنق % 13(@)(@@) % حلاها الهوى منه ، فليس لغيرها % % به من هواه حيث نحى معلق % 14(@)(@@) % تكاد غداة البين تنطق عينه % بعبرته ، لو كانت العين تنطق % % PageV01P347 البحر : طويل 1(@)(@@) % أفي رسم دار دمعك المترقرق % سفاها ، وما استنطاق ما ليس ينطق ؟ % 2(@)(@@) % بحيث التقى جمع ، وأقصى محسر ، % معالمه كادت ، على البعد ، تخلق % 3(@)(@@) % ذكرت به ما قد مضى ، وتذكر ل % حبيب ورسم الدار مما يشوق % 4(@)(@@) % ليالي من دهر ، إذ الحي جيرة ، % وإذ هو مأمول الخميلة ، مونق % 5(@)(@@) % مقاما لنا ، عند العشاء ، ومجلسا % به لم يكدره علينا معوق % 6(@)(@@) % وممشى فتاة ب لكساء تكننا % % به تحت عين برقها يتألق % 7(@)(@@) % يبل أعالي الثوب قطر ، وتحته % % شعاع بدا يعشي العيون ، ويشرق % % 8(@)(@@) % فأحسن شيء بدء أول ليلنا ، % وآخره حزم ، إذا نتفرق % PageV01P348 البحر : خفيف تام 1(@)(@@) % أيها الباكر المريد فراقي ، % بعدما هجت بالحديث اشتياقي % % 2(@)(@@) % ليت شعري غداة بانوا ، وفيهم % صورة الشمس ، أين يرجى التلاقي % % 3(@)(@@) % جزع يعتريك ، يا قلب ، منها ، % إن يحثوا جمالهم لانطلاق % 4(@)(@@) % قد شفينا النفوس 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms75# ، إن كان يشفي % % من هواها عناقها و عتناقي % % 5(@)(@@) % حين كفت دموعها ، ثم قالت : % أزف البين و نطلاق الرفاق % 6(@)(@@) % إن قلبي لفيكم اليوم رهن % لشقائي ، وحب أهل العراق % PageV01P349 البحر : طويل 1(@)(@@) % أراني وهندا أكثر الناس قالة % علينا ، وقول الناس بالمرء ملحق % 2(@)(@@) % تكننها نسوانها ، ويلومني % % صحابي ، وكل ما ستطاع معوق % 3(@)(@@) % فنحن ، على بغي الوشاة وسعيهم ، % هوانا جميع ، أمرنا حيث يصفق % 4(@)(@@) % فإن نحن جئنا سنة لم تكن مضت ، % فنحن إذا مما يقولون أخرق % % 5(@)(@@) % وإن كان أمرا سنه الناس قبلنا % % ففيم مقال الناس فينا : تفرقوا % % 6(@)(@@) % أحقا بأن لم تهو غانية فتى ، % وأن أناسا لم يحبوا ويعشقوا % % 7(@)(@@) % فمن ذا الذي ، إن جئت ما أمروا به ، % يبيت بهم آخر الليل يأرق ؟ % 8(@)(@@) % وإن التي نهيتها عن وصالنا % % تبيت ، إذا شتاقت إلينا ، تشوق % 9(@)(@@) % فإنا لمحقوقون أن لا يردنا % % أقاويل ما سدوا علينا وألصقوا % % PageV01P350 البحر : طويل 1(@)(@@) % ألا قاتل الله الهوى حيث أخلقا ، % فما ان ترى إلا مشويا ممذقا % % 2(@)(@@) % فما من محب يستزيد حبيبه % يعاتبه في الود ، إلا تفرقا % % 3(@)(@@) % تعلق هذا القلب للحب ، معلقا % % غزالا ، تحلى عقد در وبارقا % % 4(@)(@@) % من الأدم تعطو ب لعشي وبالضحى % % من الضال ، غصنا ناعم النبت مورقا % % 5(@)(@@) % ألوف لأظلال الكناس وللثرى ، % إذا ما لعاب الشمس بالصيف أشرقا % % PageV01P351 البحر : منسرح 1(@)(@@) % يا ليلة نامها الخلي من الحزن ، % ونومي مسهد أرق % 2(@)(@@) % أرقب نجما ، كأن آخره ، % بعد السماكين ، لؤلؤ نسق % % 3(@)(@@) % يا نعم لا أخلف الصديق ولا % يطمع في الوشاة إن نطقوا % % 4(@)(@@) % لا والذي أحرم العباد له ، % بكل فج من حجة رفق % % 5(@)(@@) % والبدن إن نزعت أجلتها ، % بالخيف ، يغشى نحورها العلق % % 6(@)(@@) % ما بات عندي سر أضمنه % إلا وفي الصدر دونه غلق % % PageV01P352 البحر : طويل 1(@)(@@) % ألم تسأل الاطلال والمنزل الخلق ، % ببرقة أعواء فيخبر إن نطق ؟ % 2(@)(@@) % ذكرت به هندا ، وظلت كأنني % % أخو نشوة لاقى الحوانيت فاغتبق % % 3(@)(@@) % وموقفها وهنا علينا ، ودمعها % % سريع ، إذا كفت تحدره ، تسق % 4(@)(@@) % وموقف أتراب لها ، إذ رأيتني ، % بكين وأبدين المعاصم والحدق % 5(@)(@@) % رأين لها شجوا ، فعجن لشجوها % % جميعا ، وأقلتن التنازع والنزق % % 6(@)(@@) % إذ الحبل موصول وإذ ودنا معا ، % جميعا ، وإذ تعطي التراسل والملق % % 7(@)(@@) % وقلن : امكثي 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms76# ما شئت لا من أمامنا % % نخاف ، ولا نخشى من الآخر للحق % PageV01P353 البحر : وافر تام 1(@)(@@) % لقد دب الهوى لك في فؤادي % % دبيب دم الحياة إلى العروق % PageV01P354 البحر : خفيف تام 1(@)(@@) % حدثيني ، وأنت غير كذوب % أتحبينني ، جعلت فداك ؟ % 2(@)(@@) % واصدقيني ، فإن قلبي رهين ، % ما يطيق الكلام فيمن سواك % 3(@)(@@) % كلما لاح ، أو تغور نجم ، % صدع القلب ذكركم ، فبكاك % 4(@)(@@) % قد تمنيت في العتاب فراقي ، % فلقد نلت ، يا ثريا ، مناك % % 5(@)(@@) % لا تطيعي الوشاة فيما أرادوا ، % يا ثريا ، ولا الذي ينهاك % 6(@)(@@) % كم فتى ماجد الخلائق ، عف ، % يتمنى في مجلس أن يراك % % 7(@)(@@) % حال من دون ذاك ما قدر % % ه ، بحق ، فما يطيق لقاك % PageV01P355 البحر : خفيف تام 1(@)(@@) % أيها العاتب الذي رام هجري ، % وبعادي ، وما علمت بذاكا % % 7(@)(@@) % وإذا ما سمعت إسما كإسمي ، % لي بالدمع أخضلت عيناكا % % PageV01P356 البحر : مجزوء الرمل 1(@)(@@) % أرسلت أسماء : إنا % % قد تبدلنا سواكا % % 2(@)(@@) % بدلا ، فاستغن عنا % % بدلا ، يغني غناكا % % 3(@)(@@) % لن ترى أسماء ، حتى % % تبلغ النجم يداكا % % 4(@)(@@) % ف جتنبني وأطيعن % ناصح الجيب نهاكا % % 5(@)(@@) % إن في الدار رجالا % كلهم يهوى رداكا % % 6(@)(@@) % لا تلمني واجتنبني ، % أنت ما سديت ذاكا % % PageV01P357 البحر : خفيف تام 1(@)(@@) % أرسلت هند إلينا رسولا % عاتبا : أن ما لنا لا نراكا % % 2(@)(@@) % فيم قد أجمعت عنا صدودا ؟ % أأردت الصرم ، أم ما عداكا ؟ % 3(@)(@@) % إن تكن حاولت غيظي ، بهجري ، % فلقد أدركت ما قد كفاكا % % 4(@)(@@) % كاذبا ، قد يعلم الله ربي % % أنني لم اجن ما كنه ذاكا % % 5(@)(@@) % وألبي داعيا إن دعاني % % وتصامم عامدا إن دعاكا % % 6(@)(@@) % وأكذب كاشحا إن أتاني ، % وتصدق كاشحا إن اتاكا % % 7(@)(@@) % إن في الأرض مساحا عريضا % ومناديح كثيرا سواكا % % 8(@)(@@) % غير أني فاعلمن ذاك حقا % لا أرى النعمة ، حتى أراكا % % 9(@)(@@) % قلت : مهما تجدي بي ، فإني % % أظهر الود لكم فوق ذاكا % % 10(@)(@@) % أنت همي ، وأحاديث نفسي % % ما تغيبت ، وإذ ما أراكا % % PageV01P358 البحر : وافر تام 1(@)(@@) % ألا يا سلم قد شطحت نواك ، % فلا وصل لغانية سواك % 2(@)(@@) % ولا حب لدي ، ولا تصاف % لغيرك ، ما علا قدمي شراكي % % 3(@)(@@) % لقد ماطلتني ، يا حب ، عصرا % فليت الله بالحب ابتلاك ! % 4(@)(@@) % لتلقي بعض ما ألقى ووجدي ، % ولا والله ، ما أهوى رداك % % 5(@)(@@) % ولكن ، قد منحت هواي 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms77# صفوا % فليت الله يمنحني هواك ! % 6(@)(@@) % وليت العاذلات ، غداة بنتم ، % وأظهرن الملامة لي فداك ! % 7(@)(@@) % وليت مخبري بالصرم منكم ، % علانية ، نعاني ، إذ نعاك % % 8(@)(@@) % فأتبعه ، لكي تجزين ودي ، % وما سلمى تجازيني بذاك % PageV01P359 البحر : متقارب تام 1(@)(@@) % أأنكرت ، من بعد عرفانكا ، % منازل كانت لجيرانكا % % 2(@)(@@) % منازل بيضاء ، كانت تكو % % ن بسر هواك ، وإعلانكا % % 3(@)(@@) % تريد رضاك ، إذا ما خلون ، % طلاب هواك وعصيانكا % % 4(@)(@@) % وإن شئت عاطتك ، أو داعبت ، % لعوب على كل أحيانكا % % 5(@)(@@) % تريك ، أحايين ، عرضية ، % وحينا ترى دون إمهانكا % % 6(@)(@@) % إذا ما تضاغنت ، ألفيتها % % صناعا ، بتسليل أضغانكا % % 7(@)(@@) % وكنت ، وكانت ، وكان الزمان ، % فأحسن بها ، وبأزمانكا ! % 8(@)(@@) % ليالي ، أنت لها موطن ، % وإذ هي أفضل أوطانكا % % 9(@)(@@) % وإذ هي شأنك تعنى به ، % وإذ غيرها ليس من شانكا % % 10(@)(@@) % وإذ هي تربك ترب الصفاء ، % وخدنك من دون أخدانكا % % PageV01P360 11(@)(@@) % وإذ كل مرعى رعته السراة ، % وإن طاب ، ليس كسعدانكا % % 12(@)(@@) % خزاماك مونقة ظلها ، % وقريانهم دون قريانكا % % 13(@)(@@) % فدب لها ولك الكاشحون ، % فحلوا حبائل أقرانكا % % 14(@)(@@) % لججت ، ولجت ، وكان اللجا % % لجاج فيه قطيعة خلصانكا % % 15(@)(@@) % وأظهرت هجرانها : ظالما % ولم تك أهلا لهجرانكا % % 16(@)(@@) % أأدنيتها ، ثم جانبتها ، % فسوف ترى غب إدنائكا % % 17(@)(@@) % أظنك تحسبها في الوداد % مراجعة بعد عهدانكا % % 18(@)(@@) % فهيهات ، هيهات ، حتى الممات ، % ت ، بهمك منها ، وأحزانكا ! % PageV01P361 البحر : خفيف تام 1(@)(@@) % أيها العاتب المكثر فيها ، % بعض لومي ، فما بلغت مناكا ! % 2(@)(@@) % لم يكن من عتابنا بسبيل ، % فترى أن ما عنانا عناكا % % 3(@)(@@) % عند غيري ، ف بغ النقيصة فيها % % إن رأيي لا يستقيد لذاكا % % PageV01P362 البحر : متقارب تام 1(@)(@@) % تقول ، غداة التقينا ، الرباب : % ب : أيا ذا أفلت أفول السماك % 2(@)(@@) % وكفت سوابق من عبرة ، % كما رفض نظم بعيد المساك % 3(@)(@@) % فقلت لها : من يطع بالصديق % ق أعداءه يجتنبه كذاك % 4(@)(@@) % أغرك أني عصيت الملا % % م فيك ، وأن هوانا هواك % % 5(@)(@@) % ولم أر لي لذة في الحيا % % ة ، تلتذها العين ، حتى أراك % % 6(@)(@@) % وكان من الذنب لي عندكم % % مكارمتي واتباعي رضاك % 7(@)(@@) % فليت الذي لام من اجلكم ، % وفي أن تزاري ، برغم ، وقاك % 8(@)(@@) % هموم الحياة ، وأسقامها ، % وإن كان حتفا جهيزا ، فداك % PageV01P363 البحر : مديد تام 1(@)(@@) % زارنا زور سررت به ، % ليت ذاك الزور لم يعجل % 2(@)(@@) % إذ أتانا ليلة وجلا ، % من عيون الخانة 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms78# العذل % 3(@)(@@) % وأتانا وهو منخرق ، % وبغال الحي لم ترحل : % 4(@)(@@) % يا أبا الخطاب هل لكم % من رسول ناصح يرسل % % 5(@)(@@) % ب لذي أخفي وأكتمه % من جميع الناس لم أقبل % % 6(@)(@@) % فأذاقتني ، على مهل ، % طيب الأنياب ، لم يثعل % 7(@)(@@) % نحسب الراح الذكي به % وسلاف الراح والسلسل % % PageV01P364 البحر : مجزوء الرجز 1(@)(@@) % قد زاد قلبي حزنا % رسم وربع محول % 2(@)(@@) % ربع لهند مقفر % قد كان حينا يؤهل % 3(@)(@@) % ما إن به من أهله % إلا الظباء الخذل % % 4(@)(@@) % قد كنت فيهم ناعما % ألهو بهم ، واجذل % % 5(@)(@@) % أيام هند ، والهوى % % منا لهند يبذل % % 6(@)(@@) % فحال دهر دونها % % دهر ، لعمري ، معضل % 7(@)(@@) % بتنا ، وقلبي مشفق ، % من صرم هند أوجل % % 8(@)(@@) % إذ أرسلت في خفية ، % إن المحب المرسل % 9(@)(@@) % تقول هند ئتنا % % فقلت ، لا ، لا أفعل % % 10(@)(@@) % والله لا آتيكم ، % حتى يزور الأول ! % PageV01P365 11(@)(@@) % عن حبكم ، يا هند ، ما % % عمرت حيا ، أغفل ! % PageV01P366 البحر : مجزوء الوافر 1(@)(@@) % ألم تربع على الطلل ، % ومغنى الحي كالخلل % 2(@)(@@) % تعفي رسمه الأرواح ، % من صبإ ، ومن شمل % 3(@)(@@) % وانداء تباكره ، % وجون واكف السبل % % 4(@)(@@) % لهند ، إن هندا حب % % ها ، قد كان من شغلي % % 5(@)(@@) % ليالي تستبي عقلي % % بوحف وارد جثل % 6(@)(@@) % وعيني مغزل حورا % % لم تكحل ، من الخذل % % 7(@)(@@) % فلما أن عرفت الدار ، % ر ، عجتت لرسمها جملي % % 8(@)(@@) % وقلت لصحبتي عوجوا % % فعاجوا هزة الإبل % % 9(@)(@@) % وقالوا : قف ولا تعجل ، % وإن كنا على عجل % 10(@)(@@) % قليل في هواك اليو % ما نلقى من العمل ! % PageV01P367 البحر : طويل 1(@)(@@) % لقد أرسلت ، في السر ، ليلى بأن أقم ، % ولا تنأنا ، إن التجنب أمثل % 2(@)(@@) % لعل العيون الرامقات لودنا % % تكذب عنا ، أو تنام فتغفل % 3(@)(@@) % أناس أمناهم ، فبثوا حديثنا ، % فلما قصرنا السير عنهم ، تقولوا % % 4(@)(@@) % فقلت ، وقد ضاقت علي برحبها % % بلادي بما قد قيل ، ف لعين تهمل % 5(@)(@@) % سأجتنبب الدار التي أنتم بها % % ولكن طرفي نحوكم سوف يعدل % % 6(@)(@@) % ألم تعلمي أني ، فهل ذاك نافع % لديك وما أخفي من الوجد أفضل ، % 7(@)(@@) % أرى مستقيم الطرف ما ام نحوكم ، % فإن أم طرفي غيركم ، فهو أحول % % PageV01P368 البحر : طويل 1(@)(@@) % جرى ناصح بالود بيني وبينها ، % فقرني يوم الحصاب إلى قتلي % % 2(@)(@@) % فطارت بحد من قؤادي ، وقارنت % قريبتها حبل الصفاء إلى حبلي % % 3(@)(@@) % فما انس ملأشياء لا أنس موقفي ، % وموقفها 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms79# يوما بقارعة النخل % 4(@)(@@) % فلما توافقنا عرفت الذي بها ، % كمثل الذي بي حذوك النعل ب لنعل % 5(@)(@@) % فعاجت بأمثال الظباء نواعم ، % إلى موقف بين الحجون إلى النخل % % 6(@)(@@) % فقالت لأتراب لها شبه الدمى ، % أطلن التمني والوقوف على شغلي % % 7(@)(@@) % وقالت لهن : ارجعن شيئا ، لعلنا % % نعاتب هذا ، أو يراجع في وصل % % 8(@)(@@) % فقلن لها : هذا عشاء ، وأهلنا % % قريب ، ألما تسأمي مركب البغل ؟ % 9(@)(@@) % فقالت : فما شئتن ، قلن لها : انزلي ، % فللأرض خير من وقوف على رحل % % 10(@)(@@) % وقمن إليها ، ك لدمى ، ف كتنفنها % % وكل يفدي ب لمودة والأهل % PageV01P369 11(@)(@@) % نجوم دراري تكنفن صورة % من البدر وافت ، غير هوج ولا نكل % % 12(@)(@@) % فسلمت و ستأنست خيفة أن يرى % % عدو مكاني أو يرى كاشح فعلي % % 13(@)(@@) % فقالت ، وأرخت جانب الستر : إنما % % معي فتحدث غير ذي رقبة أهلي % % 14(@)(@@) % فقلت لها : ما بي لهم من ترقب ، % ولكن سري ليس يحمله مثلي % % 15(@)(@@) % فلما قتصرنا دونهن حديثنا ، % وهن طبيبات بحاجة ذي التبل % 16(@)(@@) % عرفن الذي تهوى ، فقلن لها : ئذني % % نطف ساعة في طيب ليل وفي سهل % % 17(@)(@@) % فقالت : فلا تلبثن ، قلن ، تحدثي ، % اتيناك ، وانسبن انسياب مها الرمل % % 18(@)(@@) % فقمن ، وقد أفهمن ذا اللب أنما % % فعلن الذي يفعلن في ذاك من أجلي % % 19(@)(@@) % وباتت تمج المسك في في غادة ، % بعيدة مهوى القرط صامتة الحجل % % 20(@)(@@) % تقلب عيني ظبية ترتعي الخلى ، % وتحنو على رخص الشوى أغيد طفل % % PageV01P370 21(@)(@@) % وتفتر عن ك لأقحوان بروضة % جلته الصبا والمستهل من الوبل % % 22(@)(@@) % أهيم بها : في كل ممسى ومصبح ، % وأكثر دعواها إذا خدرت رجلي % % PageV01P371 البحر : طويل 1(@)(@@) % أشر ، يا ابن عمي ، في سلامة ما ترى % % لنا ، وتبديها لتسلبني عقلي % % 2(@)(@@) % على حين لاح الشيب و ستنكر الصبا % % وراجعني حلمي وأقصرت عن جهلي % % 3(@)(@@) % وآلت كما آل المجرب ، بعدما % % صحوت ، ومل العاذلات من العذل % 4(@)(@@) % وأبديت عصيانا لهن ، سببنني ، % وألقين من يأس على غاربي حبلي % % 5(@)(@@) % وأقبلن يمشين الهوينا عشية ، % يقتلن من يرمين ب لحدق النجل % 6(@)(@@) % غرائب من حيين شتى لقينني % % على حالة ما خاف من مثلها مثلي % % 7(@)(@@) % فسلمن تسليما ضعيفا وأعين % نحاذرها من أهلهن ، ومن أهلي % % 8(@)(@@) % وقلن : لو ان الله شاء لقيتنا % % على غير هذا من 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms80# مقام ومن شغل % 9(@)(@@) % إذا لبثثناك الاحاديث ، واشتفت % نفوس ، ولكن المقام على رجل ! % 10(@)(@@) % وقلن : متى بعد العشية نلتقي % % لميعادنا ؟ هيهات ، هيهات ، للوصل ! % PageV01P372 البحر : طويل 1(@)(@@) % ألم يسلني نأي المزار صبابتي % % إلى أم عبد الله ، والنأي قد يسلي ؟ % 2(@)(@@) % من المرعدات الطرف ، تنفذ عينها % % إلى نحو حيزوم المجرب ذي العقل % 3(@)(@@) % فلا هي لانت بعض لين يصيرها % % إلينا ، ولا أبدت لنا جانب البخل % % PageV01P373 البحر : خفيف تام 1(@)(@@) % كدت يوم الرحيل أقضي حياتي ، % ليتني مت قبل يوم الرحيل % 2(@)(@@) % لا أطيق الكلام ، من شدة الوج % د ، ودمعي يسيل كل مسيل % 3(@)(@@) % ذرفت عينها ، ففاضت دموعي ، % وكلانا يلقى بلب أصيل % 4(@)(@@) % لو خلت خلتي ، أصبت نوالا ، % أو حديثا يشفي مع التنويل % % 5(@)(@@) % ولقد قالت الحبيبة : لولا % % كثرة الناس جدت بالتقبيل % 6(@)(@@) % ليس طعم الكافور والمسك شيبا ، % ثم علا بالراح والزنجبيل % % 7(@)(@@) % حين تنتابها ، بأطيب من في % % ها طروقا ، إن شئت ، أو بالمقيل % % 8(@)(@@) % ذاك ظني ، ولم أذق طعم فيها ، % لا وما في الكتاب من تنزيل % 9(@)(@@) % وبفرع ، حدثته ، كالمثاني ، % عل بالمسك ، فهو مثل السديل % % 10(@)(@@) % ربعة ، أو فويق ذاك قليلا % ونؤوم الضحى ، وحق كسول % % PageV01P374 11(@)(@@) % لا يزال الخلخال فوق الحشايا % % مثل أثناء حية مقتول % 12(@)(@@) % زان ما تحت كعبها قدماها % % حين تمشي ، والكعب غير نبيل % PageV01P375 البحر : خفيف تام 1(@)(@@) % إن طرفي دل الفؤاد عليها ، سر قليلا ، ولا تلمني خليلي % % لوداع الرباب قبل الرحيل % 2(@)(@@) % إن في النفس حاجة ما تقضى ، % ما دعا في الغصون داعي هديل % 3(@)(@@) % إن طرفي دل الفؤاد عليها ، % ففؤادي كالهائم المقتول % PageV01P376 البحر : مجزوء الخفيف 1(@)(@@) % ذكر القلب ذكرة % من حبيب مزايل % 2(@)(@@) % ماجد قد صبا بكم ، % والصبى غير طائل % % 3(@)(@@) % مستمر لطية ، % سالك في الغوائل % 4(@)(@@) % ولقد خفت خلة ، % لست منها بوائل % % 5(@)(@@) % إن نأتكم ديارنا % % و لتباس الحبائل % 6(@)(@@) % وصرمتم مشيعا ، % وده غير زائل % % 7(@)(@@) % أحدث الصرم بيننا ، % إذ بدا ، قول قائل % 8(@)(@@) % إذ بدت بين نسوة % جازئات ، عقائل % % PageV01P377 البحر : مجزوء الخفيف 1(@)(@@) % هاج ذا القلب منزل % دارس الآي محول % 2(@)(@@) % غيرت آيه الصبا ، % وجنوب ، وشمال % 3(@)(@@) % ولقد كان آهلا % فيه ظبي مبتل % 4(@)(@@) % طيب النشر ، واضح ، % أحور العين ، أكحل % % 5(@)(@@) % فلئن بان أهله % فبما كان يؤهل % 6(@)(@@) % قد أرانا بغبطة 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms81# % فيه نلهو ، ونجذل % % 7(@)(@@) % بجوار خرائد ، % ذاك ، والود يبذل % 8(@)(@@) % إذ فؤادي بزينب ، % أم يعلى موكل % 9(@)(@@) % وهي فينا ، فلا تبا % % ليه ، تلحى ، وتعذل % % 10(@)(@@) % قبل أن يستفزها % % قول واش يحمل % PageV01P378 11(@)(@@) % حين أرسلت ثهللا ، % واخو الود مرسل % 12(@)(@@) % ب عتذار من سخطها % % عل أسماء تقبل % % 13(@)(@@) % فأتتني بما هوي % % من القول ، ثهلل % 14(@)(@@) % حين قالت : تقول زي % % نب : إنا سنفعل % % 15(@)(@@) % أنا من ذاك آيس % غير أني أعلل % 16(@)(@@) % وأخ يستحثني ، % وينادي ، ويبذل % % 17(@)(@@) % كلما قال لي : انطلق ، % قلت : إربع ، سأفعل % PageV01P379 البحر : سريع 1(@)(@@) % يا أيها العاذل في حبها % % لست مطاعا ، أيها العاذل % 2(@)(@@) % أنت صحيح من جوى حبها ، % وحبها لي سقم داخل % 3(@)(@@) % إن الذي لاقيت من حبها % % لم يلقه حاف ولا ناعل % 4(@)(@@) % الموت خير من حياة كذا ، % لا أنا موصول ، ولا ذاهل % % 5(@)(@@) % لما أتاني قائل ب لذي % % أكره مما يخبر السائل % 6(@)(@@) % قلت ، وعيني مسبل دمعها ، % كالدر من أرجائها هامل : % 7(@)(@@) % يا ليتني مت ، ومات الهوى ، % ومات ، قبل الملتقى ، واصل % % 8(@)(@@) % يا دار امست دارسا رسمها ، % وحشا قفارا ما بها آهل % 9(@)(@@) % قد جرت الريح بها ذيلها % % و ستن في أطلالها الوابل % PageV01P380 البحر : خفيف تام 1(@)(@@) % مرحبا ، ثم مرحبا بالتي قالت ، غ % % لت ، غداة الوداع ، يوم الرحيل % 2(@)(@@) % للثريا : قولي له انت همي ، % ومنى النفس خاليا ، وخليلي % % 3(@)(@@) % ف لتقينا ، فرحبت ، ثم قالت : % عمرك الله ، ائتنا في المقيل % 4(@)(@@) % في خلاء ، كيما يرينك عندي ، % فيصدقنني ، فداك قبيلي ! % 5(@)(@@) % لم يرعهن ، عند ذاك ، وقد جئ % % جئت لميعادهن ، إلا دخولي % % 6(@)(@@) % قلن : هذا الذي نلومك فيه ؟ % لا تحجي من قولنا بفتيل % 7(@)(@@) % فصليه ، فلن تلامي عليه ، % فهو أهل الصفاء والتنويل % 8(@)(@@) % قالت : انصتن واستمعن مقالي ، % لست أرضى من خلتي بقليل % 9(@)(@@) % قد صفا العيش ، والمغيري عندي ، % حبذا هو من صاحب وخليل % % PageV01P381 البحر : طويل 1(@)(@@) % تصابى ، وما بعض التصابي بطائل ، % وعاود من هند جوى غير زائل % 2(@)(@@) % كما نكست هيماء ، أحدث ردعها % % بمستنقع ، أعراضه للهوامل % 3(@)(@@) % عشية قالت : صدعت غربة النوى ، % فما من لقاء بيننا دون قابل % 4(@)(@@) % وما أنس ملأشياء لا أنس مجلسا % لنا مرة منها بقرن المنازل % % 5(@)(@@) % بنخلة ، بين النخلتين ، تكننا % % من العين ، خوف العين ، برد المراجل % % PageV01P382 البحر : طويل 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms82# 1(@)(@@) % قل للذي يهوى تفرق بيننا % % بحبل ودادي : أي ذلك يفعل ؟ % 2(@)(@@) % فويل امها أمنية ، لو تفهمت % معانيها ، أو كانت اللب تعمل % % 3(@)(@@) % أغيظي تمنت أم أرادت فراقها % % إلي ، فلا حاشاي ، بل أنا أقبل % 4(@)(@@) % أؤمن ، فادع الله يجمع بيننا % % بحبل شديد العقد ، لا يتحلل % 5(@)(@@) % وددنا ونعطى ما يجود ، لو انه % لنا رائم ، حتى يؤوب المنخل % % 6(@)(@@) % فلست بناس ، ما حييت ، مقالها % % لنا ، ليلة البطحاء ، والدمع يهمل : % 7(@)(@@) % لقد غنيت نفسي ، وأنت بهمها ، % فقد جعلت ، والحمد لله ، تذهل % 8(@)(@@) % أراك تسويني بمن لست مثله % وللحفظ أهل ، والصبابة منزل % % 9(@)(@@) % ولو كنت صبا بي كما أنا صبة % أطعت ، ولكني أجد وتهزل % 10(@)(@@) % فقلت لها قول امرىء متحفظ ، % تجلد عمدا ، وهو للصلح أشكل : % PageV01P383 11(@)(@@) % أبيني لنا ، إن كان هذا تجنبا % % لصرم ، فتصريح الصريمة أجمل % % 12(@)(@@) % وإن كان إنكارا لأمر كرهته % فرابك أني تائب متنصل % % 13(@)(@@) % وقد علمت ، إذ باعدتني تجنبا ، % فدت نفسها نفسي على من تعول % % 14(@)(@@) % هنيئا لقلب ، كنت احسب أنه ، % إذا شاء سال عنك ، أو متبدل % 15(@)(@@) % فمت كمدا ، يا قلب ، أو عش ، فإنما % % رأيتك ب لجافي البخيل موكل % PageV01P384 البحر : طويل 1(@)(@@) % أتاني كتاب منك فيه تعتب % علي وإسراع ، هديت إلى عذلي ! % 2(@)(@@) % فعزيت نفسي ثم مال بي الهوى % % وقبلي قاد الحب من كان ذا تبل % 3(@)(@@) % فقلت : إذا كافأت من هو مذنب % مسيء ، بما أسدى إلي ، فما فضلي ؟ % 4(@)(@@) % لم أرتجي حلمي إذا أنا لم أعد % عليك ، ولم يجمع لجهلكم جهلي % % 5(@)(@@) % فلا تقتليني ، إن رأيت صبابتي % % إليك ، فإني لا يحل لكم قتلي % % 6(@)(@@) % وقلت لها : والله ، ما زلت طائعا % لكم ، سامعا في رجع قول وفي فعل % % 7(@)(@@) % فما أنس من ود تقادم عهده % فلست بناس ، ما هدت قدمي نعلي % % 8(@)(@@) % عشية قالت ، والدموع بعينها : % هنيئا لقلب ، عنك لم يسله مسلي % % 9(@)(@@) % لقد كان في إقراضك الود غيرنا % % وفعلك ناه لي ، لو ان معي عقلي % % 10(@)(@@) % فهذا الذي في غير ذنب علمته % % صنيعك بي حتى كأني أخو ذحل % % PageV01P385 11(@)(@@) % هل الصرم إلا مسلمي ، إن صرم % % تني ، إلى سقم ما عشت أو بالغ قتلي % % 12(@)(@@) % ساملك نفسي ما استطعت ، فإن تصل % % أصلك ، وإن تصرم حبالك من 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms83# حبلي % % 13(@)(@@) % أكن ك لذي أسدى إلى غير شاكر % يدا لم يثب فيها بحمد ولا بذل % PageV01P386 البحر : مجزوء الرمل 1(@)(@@) % فجعتنا أم بشر % بعد قرب ب حتمال % 2(@)(@@) % بينما نحن جميعا % جيرة في خير حال % 3(@)(@@) % إذ سمعنا من مناد % % أن تهيوا لارتحال % % 4(@)(@@) % فزعوا للبين ، لما % % نزلوا بزل الجمال % % 5(@)(@@) % وبغالا ملجمات ، % جنبوها بالجلال % % 6(@)(@@) % فاستقلوا ، ودموعي % % قد أربت ب نهمال % 7(@)(@@) % من هوى خود لعوب % غادة مثل الهلال % 8(@)(@@) % أشبه الخلق جميعا % حين تبدو ، ب لمثال % 9(@)(@@) % إنما ألوت بعقلي % % بعد حلم واكتهال % 10(@)(@@) % حين لاح الشيب مني % % في شواتي وقذالي % % PageV01P387 11(@)(@@) % أيها الناصح ، قبلي % % فتنت شمط الرجال % % 12(@)(@@) % ففؤادي في هواها % % هائم أخرى الليالي % % PageV01P388 البحر : سريع 1(@)(@@) % أرسلت لما عيل صبري إلى % % أسماء ، والصب بأن يرسلا ، % 2(@)(@@) % أذكر أن لا بد من مجلس ، % يكون عن سامركم معزلا % % 3(@)(@@) % لأأبثكم فيه جوى شفني ، % حملته من حبكم ، مثقلا % % 4(@)(@@) % ف بتسمت عن نير واضح % مفلج ، عذب ، إذا قبلا % % 5(@)(@@) % كأقحوان الرمل في جائر % أو كسنا البرق إذا هللا % % 6(@)(@@) % ثم دعت ، من عجب ، أختها % % وواعديه سرحتي مالك % 7(@)(@@) % يسومني ، معتذرا ، مجلسا ، % كأنه يأمن أن نبخلا % % 8(@)(@@) % فأرسلت أروى وقالت لها ، % من قبل أن ترضى وأن تقبلا : % 9(@)(@@) % إيتيه ب لله وقولي له : % والله ، لا يفعله ، ثم لا % % 10(@)(@@) % وواعديه سرحتني مالك ، % أو الربى دونهما ، منزلا % % PageV01P389 11(@)(@@) % وليأت ، إن جاء ، على بغلة % إني أخاف المهر أن يصهلا % % 12(@)(@@) % لما لتقينا رحبت تربها % % هند وقالت : قلبا حولا % % 13(@)(@@) % وأعرضت من غير ما بغضة ، % لكاشح لم يأل أن يمحلا % % 14(@)(@@) % بلغها كذبا ، ولم يألها % % غشا ، وشر الناس من حملا % % PageV01P390 البحر : وافر تام 1(@)(@@) % ألا إني عشية دار زيد ، % على عجل أردت بأن أقولا : % 2(@)(@@) % أنيلي قبل وشك لبين إني % % أرى مكثي بأرضكم قليلا % % 3(@)(@@) % فهزت رأسها عجبا ، وقالت : % عذرتك ، لو ترى منهم غفولا % % 4(@)(@@) % ولكن ليس يعرف لي خروج ، % ولا تسطيع في سر دخولا % % 5(@)(@@) % هلم ، فأعطني واسترض مني % % مواثيقا ، على أن لا تحولا % % 6(@)(@@) % وأن نرعى الأمانة ، ما نأينا ، % ونعمل في تجاورنا الرسولا % % 7(@)(@@) % فقلت لها : وددت ، ولي أني % % وجدت إلى لقائكم سبيلا % % PageV01P391 البحر : بسيط تام 1(@)(@@) % يا أم نوفل ، فكي عانيا مثلت % به قريبة ، أو 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms84# هو هالك عجلا % % 2(@)(@@) % كما دعوت التي قامت بقرقرها ، % تمشي كمشي ضعيف خر فانجدلا % % 3(@)(@@) % فمجت المسك بحتا ليس يخلطه % % إلا سحيق من الكافور قد نخلا % % 4(@)(@@) % والزنجبيل مع التفاح تحسبه ، % من طيب ريقتها ، قد خالط العسلا % % 5(@)(@@) % يا طيب طعم ثناياها ، وريقتها ، % إذا ستقل عمود الصبح ف عتدلا % % 6(@)(@@) % مجاجة المسك ، لا تقلى شمائلها ، % تزداد عندي ، إذا ما ماحل محلا % % 7(@)(@@) % لو كان يخبل طيب النشر ذا كلف ، % لكنت من طيب رياها الذي خبلا % % 8(@)(@@) % لها من الرئم عيناه وسنته % ونخوة السابق المختال إذ صهلا % % 9(@)(@@) % مطلت ديني ، وأنت اليوم موسرة ، % أحبب بها من غريم موسر مطلا ! % 10(@)(@@) % مطلته سنة حولا ، مجرمة ، % وبعض أخرى ، تجني الذنب والعللا % % PageV01P392 البحر : طويل 1(@)(@@) % خليلي ، عوجا ، نسأل اليوم منزلا % % أبى ب لبراق العفر أن يتحولا % % 2(@)(@@) % بفرع النبيت ، فالشرى خف أهله ، % وبدل أرواحا جنوبا وشمالا % % 3(@)(@@) % ضرائر أوطن العراص ، كأنما % % أجلن على ما غادر الحي منخلا % % 4(@)(@@) % ديار التي قامت إلى السجف غدوة ، % لتنكأ قلبا كان قدما مقتلا % % 5(@)(@@) % أرادت ، فلم تسطع كلاما ، فأومأت % إلي ، ولم تأمن رسولا فترسلا : % 6(@)(@@) % بأن بت عسى أن يستر الليل مجلسا % لنا ، أو تنام العين عنا فتغفلا % % 7(@)(@@) % فوطنت نفسي للمبيت فولجوا % % لي الربض الاعلى مطيا وأرحلا % % 8(@)(@@) % وقالت لتربيها : اعلما أن زائرا ، % على رقبة تيكما متغفلا % % 9(@)(@@) % فقولا له ، إن جاء : أهلا ومرحبا ، % ولينا له كي يطمئن وسهلا % % 10(@)(@@) % فراجعتاها : أن نعم ، فتيممي % % لنا منزلا عن سامر الحي معزلا % % PageV01P393 11(@)(@@) % ولا تعجلي أن تهدأ العين ، و تركي % % رقيبا بأبواب البيوت موكلا % % 12(@)(@@) % فبتث أفاتيها ، فلا هي ترعوي % % لجود ، ولا تبدي إباء ، فتبخلا % % 13(@)(@@) % وأكرمها من أن ترى بعض شدة ، % وتبدي مواعيد المنى والتعللا % % 14(@)(@@) % فلم أر مأتيا يؤمل بذله ، % إذا سئلت ، أبدى إباء ، وأبخلا % % 15(@)(@@) % وأمنع للشيء الذي لا يضيرها ، % وأسبى لذي الحلم الذي قد تذللا % % 16(@)(@@) % إذا طمعت ، عادت إلى غير مطمع % بجود ، وتأبى النفس أن تتحللا % % PageV01P394 البحر : سريع 1(@)(@@) % عوجا نحي الطلل المحولا ، % والربع من أسماء ، والمنزلا % % 2(@)(@@) % ومجلس النسوة بعد الكرى % % أمن فيه الأبطح الأسهلا % % 3(@)(@@) % بجانب البوباة ، لم يعده % تقادم العهد بأن يؤهلا % 4(@)(@@) % إياي ، لا إياكما ، هيج ل % زل للشوق 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms85# ، فلا تعجلا % % 5(@)(@@) % إن كنتما خلوين من حاجتي ، ال % % يوم ، فإن الحق أن تجملا % % 6(@)(@@) % ذكرني المنزل ما غبتما % % عنه ، فعوجا ساعة واسألا % % 7(@)(@@) % إن يصبح المنزل من أهله % وحشا مغاني رسمه ممحلا % % 8(@)(@@) % فقد أراه ، وبه ربرب % مثل لمها ، يقرو الملا لمبقلا % % 9(@)(@@) % أيام أسماء به شادن % خود ، تراعي رشأ أكحلا % % 10(@)(@@) % قالت لتربينلها عندها : % هل تعرفان الرجل المقبلا ؟ % PageV01P395 11(@)(@@) % قالت فتاة ، عندها ، معصر ، % تدير حوراوين ، لم تخذلا : % 12(@)(@@) % هذا أبو الخطاب ، قالت : نعم ، % قد جاء من نهوى ، وما أغفلا % PageV01P396 البحر : كامل تام 1(@)(@@) % ودع لبابة قبل أن تترحلا ، % و سأل ، فإن قليله أن تسألا % % 2(@)(@@) % أمكث ، بعمرك ، ليلة ، وتأنها ، % فلعل ما بخلت به أن يبذلا % % 3(@)(@@) % قال : ائتمر ما شئت غير نازع % فيما هويت ، فإننا لن نعجلا % % 4(@)(@@) % لسنا نبالي ، حين تدرك حاجة ، % ما بات ، أو ظل المطي معقلا % % 5(@)(@@) % نجزي بأيد كنت تبذلها لنا ، % حق علينا ، واجب أن نفعلا ! % 6(@)(@@) % حتى إذا ما الليل جن ظلامه ، % ورقبت غفلة كاشح أن يمحلا % % 7(@)(@@) % و ستنكح النوم الذين نخافهم ، % ورمى الكرى بوابهم ، فتخبلا % % 8(@)(@@) % خرجت تأطر في الثياب ، كأنها % % ريح تسنت عن كثيب أهيلا % % 9(@)(@@) % فجلا القناع سحابة مشهورة % غراء تعشي الطرف أن يتأملا % % 10(@)(@@) % سلمت حين لقيتها ، فتهللت % لتحيتي ، لما رأتني مقبلا % % PageV01P397 11(@)(@@) % فلبثت أرقيها بما لو عاقل % يرقى به ما سطاع ألا ينزلا % % 12(@)(@@) % تدنو فتطمع ، ثم تمنع بذلها % % نفس أبت بالجود لأن تتحللا % % PageV01P398 البحر : طويل 1(@)(@@) % أرقت ولم آرق لسقم أصابني ، % أراقب ليلا ما يزول طويلا % % 2(@)(@@) % إذا خفقت منه نجوم ، فحلقت ، % تبينت من تالي النجوم رعيلا % % 3(@)(@@) % فلما مضت من أول الليل هجعة ، % وأيقنت من حس العيون غفولا % % 4(@)(@@) % دخلت على خوف ، فأرقت كاعبا ، % هضيم الحشا ، ريا العظام ، كسولا % % 5(@)(@@) % فهبت تطيع الصوت نشوى من الكرى ، % كمغتبق الراح المدام شمولا % % 6(@)(@@) % فعضت على الإبهام منها مخافة % علي ، وقالت : قد عجلت دخولا % % 7(@)(@@) % فهلا ، إذا ستيقنت أنك داخل ، % دسست إلينا ، في الخلاء ، رسولا % % 8(@)(@@) % فنقصر عنا عين من هو كاشح % وتاتي ، ولا نخشى عليك دليلا % % 9(@)(@@) % فقلت : دعاني حبكم ، فأجبته % إليك ، فقالت : بل خلقت عجولا % % 10(@)(@@) % فلما أفضنا في الهوى نستبثه ، % وعاد لنا صعب الحديث ذلولا 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms86# % % PageV01P399 11(@)(@@) % شكوت إليها ، ثم أظهرت عبرة ، % وأخفيت منه في الفؤاد غليلا % % 12(@)(@@) % فقلت : صلي من قد أسرت فؤاده ، % وعاد له فيك النصوح عذولا % % 13(@)(@@) % فصدت ، وقالت : ما تزال متيما ، % بنجد ، وإن كنت الصحيح ، قتيلا % % 14(@)(@@) % صدود شموس ، ثم لانت ، وقربت % إلي ، وقالت لي : سألت قليلا ! % 15(@)(@@) % قدرت على ما عندنا من مودة ، % ودائم وصل ، إن وجدت وصولا % % 16(@)(@@) % لقد حليتك العين اول نظرة ، % وأعطيت مني ، يا ابن عم ، قبولا % % 17(@)(@@) % فأصبحت هما للفؤاد ، ومنية ، % وظلا من النعمى علي ، ظليلا % % 18(@)(@@) % أميرا على ما شئت مني مسلطا % فسل ، فلك الرحمن يمنح سولا % % 19(@)(@@) % فقلت لها : يا سكن إني لسائل % سؤال كريم ، ما سألت ، جميلا % % 20(@)(@@) % سألت بأن تعصي بنا قول كاشح ، % وإن كان ذا قربى لكم ، ودخيلا % % PageV01P400 21(@)(@@) % وأن لا تزال النفس منك مضيفة % علي ، وتبدي ، إن هلكت ، عويلا % % 22(@)(@@) % وأن تكرمي ، يوما ، إذا ما أتاكم % رسول ، لشجو ، مقصرا ومطيلا % % 23(@)(@@) % وأن تحفظي ب لغيب سري وتمنحي % % جليسك طرفا ، في الملام ، كليلا % % PageV01P401 البحر : بسيط تام 1(@)(@@) % يا صاحبي ، قفا نستخبر الطللا % % عن بعض من حله ب لأمس ، ما فعلا % % 2(@)(@@) % فقال لي الربع ، لما ان وقفت به : % إن الخليط أجد البين ف حتملا % % 3(@)(@@) % وخادعتك النوى حتى رأيتهم % في الفجر ، يحتث حادي عيرهم زجلا % % 4(@)(@@) % لما وقفنا نحييهم ، وقد شحطت % نعامة البين ، ف ستولت بهم أصلا % % 5(@)(@@) % قامت تراءى لحين ساقه قدر ، % وقد نرى انها لن تسبق الأجلا % % 6(@)(@@) % بفاحم مكرع سود غدائره % تثني على المتن منه واردا جثلا % % 7(@)(@@) % ومقلتي نعجة أدماء ، أسلمها % % أحوى المدامع ، طاوي الكشح قد خذلا % % 8(@)(@@) % ونير النبت عذب بارد خصر ، % ك لأقحوان عذاب طعمه رتلا % % 9(@)(@@) % كأن إسفنطة شيبت بذي شبم % من صوب أزرق هبت ريحه شملا % % 10(@)(@@) % والعنبر الاكلف المسحوق خالطه ، % والزنجبيل ، وراح الشام ، والعسلا % % PageV01P402 11(@)(@@) % تشفي الضجيع به ، وهنا ، عوارضها ، % إذا تغور هذا النجم و عتدلا % % 12(@)(@@) % قالت على رقبة يوما لجارتها : % ما تأمرين ؟ فإن القلب قد تبلا % % 13(@)(@@) % وهل لي اليوم من أخت مواسية % منكن ، أشكو إليها بعض ما عملا ؟ % 14(@)(@@) % فجاوبتها حصان غير فاحشة ، % برجع قول ، وأمر لم يكن خطلا : % 15(@)(@@) % إقني حياءك في ستر ، وفي كرم ، % فلست اول 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms87# أنثى علقت رجلا % % 16(@)(@@) % لا تظهري حبه ، حتى أراجعه ، % إني سأكفيكه ، إن لم أمت عجلا % % 17(@)(@@) % صدت بعادا ، وقالت للتي معها : % ب لله لوميه في بعض الذي فعلا % % 18(@)(@@) % وحدثيه بما حدثت ، و ستمعي % % ماذا يقول ، ولا تعيي به جدلا % % 19(@)(@@) % حتى يرى أن ما قال الوشاة له % فينا ، لديه إلينا كله نقلا % % 20(@)(@@) % وعرفيه به كالهزل ، واحتفظي % % في غير معتبة أن تغضبي الرجلا % % PageV01P403 21(@)(@@) % فإن عهدي به ، و لله يحفظه ، % وإن أتى الذنب ممن يكره العذلا % % 22(@)(@@) % لو عندنا غتيب ، أو نيلت نقيصته ، % ماى ب مغتابه من عندنا جذلا % % 23(@)(@@) % قلت : اسمعي فلقد أبلغت في لطف ، % وليس يخفى على ذي اللب من هزلا % % 24(@)(@@) % هذا أرادت به بخلا لنعذرها ، % وقد نرى أنها لن تعدم العللا % % 25(@)(@@) % ما سمي القلب إلا من تقلبه % ولا الفؤاد فؤادا غير ان عقلا % % 26(@)(@@) % أما الحديث الذي قالت أتيت به ، % فما عنيت به ، إذ جاءني ، حولا % % 27(@)(@@) % ما أطعت بها بالغيب ، قد علمت % مقالة الكاشح الواشي إذا محلا % % 28(@)(@@) % إني لأرجعه فيها بسخطته % وقد أتاني يرجي طاعتي نفلا % % PageV01P404 البحر : خفيف تام 1(@)(@@) % جن قلبي ، فقلت : يا قلب مهلا : % لا تبدل ب لحلم والعزم جهلا ! % 2(@)(@@) % حلفت أن ما اتاها يقين ، % قلت : لا تحلفي ، فديتك ، كلا ! % 3(@)(@@) % أسأل الله من بداك بصرم % أن يرى في الحياة ، ما عاش ، ذلا % 4(@)(@@) % فاتقي الله ، واقبلي العذر مني ، % وتجافي عن بعض ما كان زلا % 5(@)(@@) % لم أرحب بان سخطت ، ولكن % % مرحبا ، إن رضيت عنا ، وأهلا % % 6(@)(@@) % إن وجها أبصرته ليلة البد % ر عليه بتنى الجمال وحلا % 7(@)(@@) % وجهك الوجه لو به تسأل المز % % ن من الحسن والجمال استهلا % % 8(@)(@@) % وأسيل من الوجوه نضير ، % دق فيه حسن الجمال وجلا % 9(@)(@@) % إنني بالسلام منك لراض ، % وأرى ذاك من نوالك جزلا % % 10(@)(@@) % لا أخون الخليل ما عشت حتى % % ينقل البحر بالغرابيل نقلا % % PageV01P405 11(@)(@@) % ثم قالت : لا تعلمن بسري ، % يا ابن عمي ، اقسمت ! قلت : أجل ، لا % % 12(@)(@@) % إن أكن قد سأيتكم فلك العت % بى ، وهان الذي سألت ، وقلا % % 13(@)(@@) % من أراد الفجور في الود منا ، % ضرب الله في ذراعيه غلا % 14(@)(@@) % حدثيني ، فدتك نفسي وأهلي ، % أتحبينني كحبك عدلا ؟ % 15(@)(@@) % إن 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms88# في الصرم راحة من عناء ، % ونعم في الجواب ، أحسنث من لا % % PageV01P406 البحر : بسيط تام 1(@)(@@) % حي المنازل أضحى رسمها مثلا ، % إربع نسائلها ، لا بأس أن تسلا % % 2(@)(@@) % عن التي لم ير الرائي كصورتها % % إنسية ، وطئت سهلا ، ولا جبلا % % 3(@)(@@) % بيضاء جازئة ، نضح العبير بها ، % ممكورة الخلق ممن يألف الحجلا % % PageV01P407 البحر : بسيط تام 1(@)(@@) % هل تعرف اليوم رسم الدار والطللا ، % كما عرفت بجفن الصيقل الخللا ؟ % 2(@)(@@) % دار لمروة ، إذ أهلي وأهلهم % بالكانسية ، نرعى اللهو والغزلا % % 3(@)(@@) % أمسى شبابك عنا الغض قد رحلا % % ولاح في الرأس شيب ، حل ف شتعلا % % 4(@)(@@) % إن الشباب ، الذي كنا نزن به ، % ولى ، ولم نقض من لذاته أملا % 5(@)(@@) % ولى الشباب حميا غير مرتجع ، % واستبدل الرأس مني شر ما بدلا % % 6(@)(@@) % شيب تفرع أبكاني مواضحه % أضحى ، وحال سواد الرأس فانتقلا % % 7(@)(@@) % ليت الشباب بنا حلت رواحله ، % وأصبح الشيب عنا اليوم منتقلا % % 8(@)(@@) % أودى الشباب وأمسى الموت يخلفه % لا مرحبا بمحل الشيب إذ نزلا % % 9(@)(@@) % ما بال عرسي قد طالت مطالبتي % % أمست تجنى علي الذنب والعللا % % PageV01P408 البحر : خفيف تام 1(@)(@@) % يا خليلي ، سائلا الأطلالا ، % ب لبليين ، إن أجزن سؤالا % % 2(@)(@@) % وسفاه ، لولا الصبابة ، حبسي ، % في رسوم الديار ، ركبا عجالا % % 3(@)(@@) % بعدما أوحشت من آل الثريا ، % وأجدت فيها النعاج الظلالا % % 4(@)(@@) % يفرح القلب ، إن رآك ، وتستع % بر عيني ، إذا أردت احتمالا % % 5(@)(@@) % ولئن كان ينفع القرب ، ما أز % % داد ، فيما أراك ، إلا خبالا % % 6(@)(@@) % غير اني ما دمت جالسة عن % % دي ، سألهو ما لم تريدي زيالا % % 7(@)(@@) % فإذا ما نصرفت ، لم أر للعي % ش التذاذا ، ولا لشيء جمالا % % 8(@)(@@) % أنت عيشي ، نعم ، ورؤيتك الخل % % د ، وكنت الحديث والأشغالا % % 9(@)(@@) % حلت دون الفؤاد ، و لتذك القل % ب ، وخلى لك النساء الوصالا % % 10(@)(@@) % وتخلقت لي خلائق أعطت % % ك قيادي ، فما ملكت احتمالا % % PageV01P409 11(@)(@@) % أيها العاذلي ، أقل عتابي ، % لم أطع في وصالها العذالا % % 12(@)(@@) % إن ما قلت و لذي عبت منها ، % لم يزدها في العين إلا جلالا % % 13(@)(@@) % لا تعبها ، فلن اطيعك فيها ، % لم أجد للوشاة فيها مقالا % % 14(@)(@@) % فيم ، بالله ، تقتلين محبا % لك ، بالول مخلصا ، بذالا % % 15(@)(@@) % ولعمري ، لئن هممت بقتلي ، % لبما قد قتلت قبلي الرجالا % % 16(@)(@@) % حدثيني عن 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms89# هجركم ووصالي ، % أحراما ترينه أم حلالا ؟ % 17(@)(@@) % ف حكمي بيننا وقولي بعدل % هل جزاء المحب إلا الوصالا % % 18(@)(@@) % ليتني مت يوم ألثم فاها ، % إذ خشينا في منظر أهوالا % % 19(@)(@@) % إذ تمنيت أنني لك بعل ، % آه ، بل ليتني بخدك خالا ! % 20(@)(@@) % وبنو الحارث بن ذهل تبنى % % في ذرى المجد فرعها فاستطالا % % PageV01P410 البحر : كامل تام 1(@)(@@) % إن الحبيب تروحت اثقاله ، % أصلا ، فدمعك دائم إسباله % 2(@)(@@) % قد راح في تلك الحمول عشية % شخص يسرك حسنه وجماله % 3(@)(@@) % شخص غضيض الطرف مضطرب الحشا % % عبل المدملج مشبع خلخاله % 4(@)(@@) % ف قن الحياء ، فقد بكيت بعولة % لو كان ينفع باكيا إعواله % % 5(@)(@@) % يا حبذا تلك الحمول ، وحبذا % % شخص هناك ، وحبذا أمثاله % PageV01P411 البحر : كامل تام 1(@)(@@) % يا نعم ، قد طالت مماطلتي ، % إن كان ينفع عاشقا مطله % 2(@)(@@) % كان الشفاء لنا ومنيتنا % % منك ، الحديث ، فغالنا غيله % % 3(@)(@@) % ففديت من أشفى برؤيته % وأبى ، وكان كثيرة عدله % % 4(@)(@@) % ظبي تزينه عوارضه ، % والعين زين لحظها كحله % % 5(@)(@@) % ولو نها برزت لمنتصب % قس ، طويل الليل ، يبتهله % 6(@)(@@) % سيار أرض لا انيس بها ، % فيها شريعته ومبتقله % 7(@)(@@) % لصبا وألقى عنه برنسه ، % وسعى ، واهون سعيه رمله % % 8(@)(@@) % حتى يعاينها معاينة ، % غزلا ، وحق لقسهم غزله % % 9(@)(@@) % كنا نؤمل أن نفوز به ، % في من نؤمله ونختتله % 10(@)(@@) % حتى أتيح لظبينا رجل ، % من اهل مكة زانه حلله % % PageV01P412 11(@)(@@) % يغدو عليه الخز يسحبه ، % ويروح في عصب ويبتذله % 12(@)(@@) % فرمى ، فأقصدها برميته ، % ورنا ، فمهد للفتى أجله % % 13(@)(@@) % قالت لقينات يطفن بها % % حولي ، ودمعي دائم سبله : % 14(@)(@@) % أنتن زينتن فرقتنا ، % ولكل صاحب زينة عمله % 15(@)(@@) % لا تعجلاه أن يسائلنا ، % إن كان شف فؤاده ثقله % 16(@)(@@) % ففديت حامله وحاضره ، % وفديت ما يسمو به جمله % 17(@)(@@) % وفديت من كانت مساكنه % ب لسهل ، أو مستوعر جبله % PageV01P413 البحر : كامل تام 1(@)(@@) % إن الخليط أجد ، فاحتملا ، % وأراد غيظك بالذي فعلا % % 2(@)(@@) % قد كنت آمل طول مكثهم ، % والنفس مما تامل الأملا % % 3(@)(@@) % فإذا البغال تشد واقفة ، % وإذا الحداة قد اعتبوا الإبلا % % 4(@)(@@) % فهناك كاد الحب يقتلني % % لو كان حب قبله قتلا % % 5(@)(@@) % إن الذين رجوت مكثهم % قد أجمعوا للبين محتملا % % PageV01P414 البحر : طويل 1(@)(@@) % خليلي ، مرا بي على رسم منزل ، % وربع لشنباء ابنة الخير ، محول % 2(@)(@@) % أتى دونه عصر ، فأخنى 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms90# برسمه % خلوجان من ريح جنوب وشمال % 3(@)(@@) % سرا جل ضاحي جلده ملتقاهما ، % ومر صبا ب لمور هوجاء محمل % 4(@)(@@) % وبدل بعد الحي عينا سواكنا ، % وخيط نعام ب لأماعز همل % 5(@)(@@) % بما قد أرى شنباء حينا تحله ، % وأترابها ، في ناضر النبت مبقل % 6(@)(@@) % أعالي تصطاد الفؤاد نساؤهم % بعيني خذول مؤنق الجم مطفل % 7(@)(@@) % ووحف يثنى في العقاص كأنه % دواني قطوف ، أو أنابيب عنصل % 8(@)(@@) % تضل مداريها ، خلال فروعها ، % إذا أرسلتها ، أو كذا غير مرسل % % 9(@)(@@) % وتنكل عن غر ، شتيت نباته ، % عذاب ثناياه ، لذيذ المقبل % 10(@)(@@) % كمثل أقاحي الرمل ، يجلو متونه % سقوط ندى من آخر لليل مخضل % PageV01P415 11(@)(@@) % إذا ابتسمت ، قلت انكلال غمامة ، % خفا برقها في عارض متهلل % 12(@)(@@) % كأن سحيق المسك خالط طعمه % وريح الخزامى في جديد القرنفل % 13(@)(@@) % بصهباء ، درياق المدام ، كأنها % % إذا ما صفا راووقها ، ماء مفصل % % 14(@)(@@) % وتمشي على برديتين غذاهما % % يهاميم أنهار بأبطح مسهل % 15(@)(@@) % من الحور ، مخماص ، كأن وشاحها % % بعسلوج غاب ، بين غيل وجدول % 16(@)(@@) % قليلة إزعاج الحديث يروعها % % تعالي الضحى لم تنتطق عن تفضل % 17(@)(@@) % نؤوم الضحى ، ممكورة الخلق ، غادة ، % هضيم الحشا حسانة المتجمل % 18(@)(@@) % فأمست أحاديث الفؤاد وهمه ، % وإن كان منها قد غدا لم ينول % 19(@)(@@) % وقد هاجني منها على النأي دمنة % لها بقديد ، دون نعف المشلل % % 20(@)(@@) % أرادت ، فلم تسطع كلاما فأومأت % % إلينا ، ونصت جيد أحور مغزل % % PageV01P416 21(@)(@@) % فقلت لأصحابي : اربعوا بعض ساعة % علي ، وعوجوا من سواهم ذبل % 22(@)(@@) % قليلا ، فقالوا : إن أمرك طاعة ، % لما تشتهي فاقض الهوى ، وتأمل % % 23(@)(@@) % لك اليوم حتى الليل ، إن شئت ، فأتهم % وصدر غد أو كله غير معجل % % 24(@)(@@) % فإنا على أن نسعف النفس ب لهوى % % حراص ، فما حاولت من ذاك فافعل % % 25(@)(@@) % ونص المطايا في رضاك وحبسها % % لك ، اليوم ، مبذول ، ولكن تجمل % 26(@)(@@) % فلما رأيت الحبس في رسمش منزل % سفاها وجهلا بالفؤاد الموكل % % 27(@)(@@) % فقلت لهم : سيروا فإن لقاءها % % توافي الحجيج ، بعد حول مكمل % % 28(@)(@@) % فما ذكره شنباء ، و لدار غربة ، % عنوج ، وإن يجمع يضر وينحل % % 29(@)(@@) % وإن تنأ ، تحدث للفؤاد زمانة ، % وإن تقترب تعد العوادي وتشغل % 30(@)(@@) % وإن يحضر الواشي تطعه ، وإن يقل % % بها كاشح عندي يجب ثم يعزل % % PageV01P417 31(@)(@@) % وإن تعد لا تحفل ، وإن 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms91# تدن لا تصل ، % وإن تنأ لا نصبر ، وغن تدن أجذل % % 32(@)(@@) % وإن تلتمس منا المودة ، نعطها ، % % 33(@)(@@) % فقد طال ، لو تبكي إلى متجود ، % بكاك إلى شنباء ، يا قلب ، فاحتل % % 34(@)(@@) % أفق إنما تبكي إلى متمنع ، % من البخل ، مألوس الخليقة ، حول % % 35(@)(@@) % فقد كاد يسلو القلب عنها ، ومن يطل % % عليه التنائي والتباعد ، يذهل % % 36(@)(@@) % على أنه ، إن يلقها بعد غيبة ، % يعد لك داء عائد ، غير مرسل % % 37(@)(@@) % فإنك لو تدرين أن رب فتية % عجالى ، ولولا انت ، لم اتعجل % % 38(@)(@@) % منعتهم التعريس ، حتى بدا لهم % % قوارب معروف من الصبح منجل % 39(@)(@@) % ينصون ب لموماة خوصا كأنها % % شرائح ينع ، أو سراء معطل % % 40(@)(@@) % دقاقا براها السير ، منها منعل الس % السريح ، وواق من حفى لم ينعل % % PageV01P418 41(@)(@@) % وأضحوا جميعا تعرف العين فيهم % كرى النوم ، مسترخي العمائم ، ميل % 42(@)(@@) % على هدم جعد الثرى ذي مسافة % مخوف الردى ، عاري البنائق ، مهمل % % 43(@)(@@) % ترى جيف الحيتان فيه كأنها % % خيام على ماء حديث منهل % % 44(@)(@@) % إرادة أن ألقاك ، يا أثل ، و لهوى % % كذلك حمال الفتى كل محمل % % 45(@)(@@) % فبعض البعاد ، يا أثيل ، فإنني % % تروك الهوى ، عن الهوان بمعزل % 46(@)(@@) % أبى لي عرضي أن أضام ، وصارم % حسام ، وعز من حديث وأول % 47(@)(@@) % مقيم ، بإذن الله ، ليس ببارح ، % مكان الثريا قاهر كل منزل % 48(@)(@@) % أقرت معد أننا خيرها جدى % % لطالب عرف ، أو لضيف محمل % 49(@)(@@) % مقاويل بالمعروف ، خرس عن الخنى ، % قضاة بفصل الحق في كل محفل % 50(@)(@@) % أخوهم إلى حصن منيع ، وجارهم % بعلياء عز ، ليس ب لمتذلل % PageV01P419 51(@)(@@) % وفينا إذا ما حادث الدهر أجحفت % نوائبه ، والدهر جم التنقل ، % 52(@)(@@) % لذي الغرم أعوان ، وبالحق قائل ، % وللحق تباع ، وللحرب مصطل % 53(@)(@@) % وللخير كساب ، وللمجد رافع ، % وللحمد أعوان ، وللخيل معتل % % 54(@)(@@) % نبيح حصون من نعادي ، وحصننا % % أشم منيع ، حزنه لم يسهل % 55(@)(@@) % نقود ذليلا من نعادي ، وقرمنا % % أبي القياد ، مصعب لم يذلل % % 56(@)(@@) % نفلل أنياب العدو ، ونابنا % % حديد شديد روقه لم يفلل % 57(@)(@@) % أولئك آبائي ، وعزي ، ومعقلي % % إليهم ، أثيل ، ف سألي أي معقل ! % PageV01P420 البحر : متقارب تام 1(@)(@@) % خليلي ، عوجا بنا ساعة % نحي الرسوم ونؤي الطلل % 2(@)(@@) % ونبك ، وهل يرجعن البكا % % علينا زمانا لنا قد تول % 3(@)(@@) % ليالي سعدى لنا خلة % تواصل في 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms92# ودنا من نصل % 4(@)(@@) % وتجلو كمزنة غيث ، لها % % غفائر تكسو البطاح النفل % 5(@)(@@) % إذا ما مشت بين أترابها ، % كمثل الإراخ يطأن الوحل % 6(@)(@@) % كأن سوابل مصيوفة % أقام بها كل وحش همل % 7(@)(@@) % سوافر قد زانهن العبير % مع المسك ، مغتنمات الطفل % % 8(@)(@@) % ففاجأنني غير ذي غرة ، % شديد الفقارة بعد النهل % 9(@)(@@) % فحييتهن ، حيينني ، % فعز الفراق علينا وجل % PageV01P421 البحر : خفيف تام 1(@)(@@) % سائلا الربع ب لبلي ، وقولا : % هجت شوقا لنا ، الغداة ، طويلا % % 2(@)(@@) % أين حي حلوك ، إذ انت مح % % ف بهم ، آهل ، أراك جميلا ؟ % 3(@)(@@) % قال : ساروا بأجمع ، ف ستقلوا ، % وبرغمي ، لو استطعت سبيلا % % 4(@)(@@) % سئمونا وما سئمنا ببين ، % وأرادوا دماثة وسهولا % % 5(@)(@@) % ذاك مغنى من آل هند ، وهند % قمرته فؤاده المتبولا % % 6(@)(@@) % إذ تبدت لنا ، فابدت أثيثا ، % حالكا لونه ، وجيدا أسيلا % % 7(@)(@@) % وشتيتا كالأقحوان عذابا ، % لم يغادر به الزمان فلولا % % PageV01P422 البحر : كامل تام 1(@)(@@) % علق النوار فؤاده جهلا % % وصبا ، فلم تترك له عقلا % % 2(@)(@@) % وتعرضت لي في المسير ، فما % % أمسى الفؤاد يرى لها شكلا % % 3(@)(@@) % ما ظبية من وحش ذي بقر % تغذو بسقط صريمة طفلا % % 4(@)(@@) % بألذ منها ، إذ تقول لنا ، % وأردت كشف قناعها : مهلا ! % 5(@)(@@) % دعنا فإنك لا مكارمة % تجزي ، ولست بواصل حبلا % % 6(@)(@@) % وعليك من تبل الفؤاد ، وإن % أمسى لقلبك ذكره شغلا % % 7(@)(@@) % فأجبتها : إن المحب مكلف ، % فذري العتاب ، وأحدثي بذلا % % PageV01P423 البحر : خفيف تام 1(@)(@@) % حي ربعا أقوى ، ورسما محيلا ، % وعراصا أمست لهند مثولا % % 2(@)(@@) % فعفا الدهر والزمان عليها ، % واجالت بها الرياح ذيولا % % 3(@)(@@) % لست أنسى منها ، عشية رحنا ، % قولها : عج علي منك قليلا % % 4(@)(@@) % أقض من لذتي ، وأعهد ، إني % % لا أرى ذا الصدود منك جميلا % % 5(@)(@@) % وأجبني ، وانت أوجد شيء ، % ولك الود خالصا مبذولا % % 6(@)(@@) % ولك الود دائما ما بقينا ، % قاطعا ، بعد ، كنت لي ، أو وصولا % % 7(@)(@@) % ما تحريت ، إذ عصيت ، ولكن % قلت ما قلت ، فاعلمن تعويلا % % 8(@)(@@) % فاقبل اليوم ما اتاك بشكر ، % لا تكونن للخليل ملولا % % PageV01P424 البحر : كامل تام 1(@)(@@) % يا أهل بابل ما نفست عليكم % من عيشكم إلا ثلاث خلال % 2(@)(@@) % ماء الفرات ، وطيب ليل بارد ، % وسماع منشدتين لابن هلال % % PageV01P425 البحر : طويل 1(@)(@@) % سقى سدرتي أجياد ، فالدومة التي % % إلى الدار ، صوب الساكب المتهلل % 2(@)(@@) % فلو كنت بالدار التي 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms93# مهبط الصفا % % سلمت ، إذا ما غاب عني معللي % % 3(@)(@@) % هنالك لو أني مرضت لعادني % % كرام ومن ، لا يأت منهن يرسل % PageV01P426 البحر : خفيف تام 1(@)(@@) % حمل القلب من حميدة ثقلا حمل القلب من حميدة ثقلا % % إن في ذاك للفؤاد لشغلا % % 2(@)(@@) % إن فعلت الذي سألت ، فقولي ، % حمد ، خيرا ، أو أتبعي القول فعلا % % 3(@)(@@) % وصليني ، فأشهد الله إني % % لست أصفي سواك ما عشت وصلا % % PageV01P427 البحر : مجزوء الوافر 1(@)(@@) % خليلي ، اربعا ، وسلا % % بمغنى الحي قد مثلا % % 2(@)(@@) % بأعلى ، الواد عند البئ % ر هيج عبرة سبلا % % 3(@)(@@) % وقد تغنى به نعم ، % وكنت بوصلها جذلا % % 4(@)(@@) % ليالي لا نحب لنا % % بعيش قد مضى ، بدلا % % 5(@)(@@) % وتهوانا ونهواها % % ونعصي قول من عذلا % % 6(@)(@@) % وترسل في ملاطفة % ونعمل نحوها الرسلا % % PageV01P428 البحر : سريع 1(@)(@@) % إعتاد هذا القلب بلباله ، % إذ قربت للبين أجماله % 2(@)(@@) % خود ، إذا قامت إلى خدرها ، % قامت قطوف المشي ، مكساله % 3(@)(@@) % تفتر عن ذي أشر بارد ، % عذب ، إذا ما ذيق سلساله % PageV01P429 البحر : خفيف تام 1(@)(@@) % إن من أكبر الكبائر عندي % % قتل بيضاء حرة عطبول % 2(@)(@@) % قتلت باطلا ، على غير ذنب ، % إن لله درها من قتيل % 3(@)(@@) % كتب القتل والقتال علينا ، % وعلى الغانيات جر الذيول % PageV01P430 البحر : طويل 1(@)(@@) % كفيت أخي العذري ما كان نابه % وإني لاعباء النوائب حمال % 2(@)(@@) % أما استحسنت مني المكارم والعلى ، % إذا طرحت ، إني لمالي بذال ؟ % PageV01P431 البحر : طويل 1(@)(@@) % ديار لسعدى ، إذ سعاد جداية ، % من الأدم ، خمصان الحشى غير خنثل % 2(@)(@@) % هجان البياض أشربت لون صفرة ، % عقيلة جو عازب ، لم يحلل % 3(@)(@@) % إذا هي لم تستك بعود أراكة % تنخل ، فاستاكت به ، عود إسحل % PageV01P432 البحر : خفيف تام 1(@)(@@) % قلت ، إذ أقبلت وزهر تهادى ، % كنعاج الملا تعسفن رملا % % 2(@)(@@) % قد تنقبن بالحرير ، وأبدي % % ن عيونا حور المدامع ، نجلا % % PageV01P433 البحر : كامل تام 1(@)(@@) % نزلت بمكة من قبائل نوفل ، % ونزلت خلف البئر ، أبعد منزل % % 2(@)(@@) % حذرا عليها من مقالة كاشح ، % ذرب اللسان ، يقول ما لم نفعل % % PageV01P434 البحر : طويل 1(@)(@@) % تشكى الكميت الجري لما جهدته ، % وبين لو يسطيع أن يتكلما % % 2(@)(@@) % فقلت له : إن ألق للعين قرة % فهان علينا أن تكل وتسأما % % 3(@)(@@) % عدمت إذا وفري ، وفارقت مهجتي ، % لئن لم أقل قرنا ، إذا الله سلما % % 4(@)(@@) % لذلك أدني 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms94# ، دون خيلي ، رباطه % وأوصي به أن لا يهان ويكرما % % 5(@)(@@) % فما راعها إلا الأغر كأنه % عقاب هوت منقضة قد رأت دما % % 6(@)(@@) % فقلت لهم : كيف الثريا ، هبلتم ، % فقالوا : ستدري ، ما نكرنا ، وتعلما % % 7(@)(@@) % هنالك فانزل ، فاسترح ، فإذا بدت % ثرياك في اترابها الحور كالدمى % % 8(@)(@@) % يردن اجتياز السر منك ، فلا تبح % % بما لم تكن عنه لدينا مجمجما % % PageV01P435 البحر : طويل 1(@)(@@) % ألا يا لقومي للهوى المتقسمش ، % وللقلب ، في ظلماء سكرته ، العمي % % 2(@)(@@) % وللحين أنى ساقني ، فاتاحني % % لأحبلها من بين مثر ومعدم % 3(@)(@@) % أقاد دمي بكر على غير ظنة ، % ولم يتأثم قاتلا غير منعم % % 4(@)(@@) % فقلت لبكر عاجبا : أتجلدتء ، % لك الخير أم لا تطمع الصيد أسهمي ؟ % 5(@)(@@) % وما ذاك إلا تعلم النفس أنه % إلى مثلها يصبو فؤاد المتيم % % 6(@)(@@) % وإني لها من فرع فهر بن مالك % ذراه ، وفرع المجد للمتوسم % % 7(@)(@@) % على أنها قالت له : لست نائلاص % % لنا ظنة ، إلا لقاء بموسم % 8(@)(@@) % وقلت لبكر ، حين رحنا عشية : % عن السر لا تقصر ولا تتقدم % 9(@)(@@) % لعلي ستنبيني الجواري من لتي % % رأت عندها قلبي ، فلم تتألم % 10(@)(@@) % فليت منى لم تجمع العام بيننا ، % ولم يك لي حج ولم نتكلم % PageV01P436 11(@)(@@) % وليت لتي عاصيت فيها عواذلي % % لها قبلت عقلا ، ولم تتحمل دمي % % 12(@)(@@) % فرحنا بقصر نتقي العين والريا % % وقول العدو الكاشح المتنمم % % 13(@)(@@) % وفي العين مرجو ، وى خر يتقى ، % فيا لك أمرا ، بين بؤسي وأنعم % 14(@)(@@) % فلما كفهر الليل ، قالت لخرد ، % كواعب ، في ريط ، وعصب مسهم % % 15(@)(@@) % نواعم قب بدن صمت البرى % % ويملأن عين الناظر المتوسم % 16(@)(@@) % رواجح اكفال تباهين ، قولها % % لديهن مقبول على كل مزعم : % 17(@)(@@) % لقد خلجت عيني ، وأحسب أنها % % لقرب أبي الخطاب ، ذلك مزعمي % % 18(@)(@@) % فقلن لها : أمنية أو مزاحة % أردت بها عيب الحديث المرجم % 19(@)(@@) % فقالت لهن : اذهبن - : آمرنا معا % لأمرك مجنوب تبوع ، فقدمي % % 20(@)(@@) % أمامك من يرعى الطريق ، فأرسلت % فتاة حصانا عذبة المتبسم % PageV01P437 21(@)(@@) % وقالت لها : إمضي ، فكوني أمامنا % % لحفظ الذي نخشى ، ولا تتكلمي % % 22(@)(@@) % فقامت ولم تفعل ، ونامت فلم تطق ، % فقلن لها : قومي ، فقامت ولم لم % 23(@)(@@) % تبن ، غير أن قد اومأت ، فعمدنها ، % كشارب مكنون الشراب المختم % 24(@)(@@) % فلما التقينا باح كل بسره % وأبدى لها منى السرور 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms95# تبسمي % % 25(@)(@@) % فيا لك ليلا بت فيه موسدا % إذا شئت ، بعد النوم ، أكرم معصم % 26(@)(@@) % وأسقى بعذب بارد الريق واضح % لذيذ الثنايا ، طيب المتنسم % % PageV01P438 البحر : طويل 1(@)(@@) % ألا قل لهندس : إحرجي وتأثمي ، % ولا تقتليني ، لا يحل لكم دمي % % 2(@)(@@) % وحلي حبال السحر عن قلب عاشق % حزين ، ولا تستحقبي قتل مسلم % % 3(@)(@@) % فأنت ، وبيت الله ، همي ومنيتي % % وكبر منانا من فصيح واعجم % 4(@)(@@) % فوالله ، ما أحببت حبك أيما ، % ولا ذات بعل ، يا هنيدة ، فاعلمي % % 5(@)(@@) % فصدت وقالت : كاذرب ! وتجهمت ، % فنفسي فداء المعرض المتجهم % 6(@)(@@) % فقالت ، وصدت : ما تزال متيما ، % صبوبا بنجد ، ذا هوى متقسم % % 7(@)(@@) % ولما التقينا بالثنية ش ، أومضت ، % مخافة عين الكاشح المتنمم % % 8(@)(@@) % أشارت بطرفش العين خشية أهلها ، % إشارة محزون ، ولم تتكلم % % 9(@)(@@) % فأيقنت أن الطرف قد قال : مرحبا ، % وأهلا وسهلا ب لحبيب المتيم % 10(@)(@@) % فأبرزت طرفي نحوها بتحية ، % وقلت لها قول امرىء غير مفحم % % PageV01P439 11(@)(@@) % وإني لأذري ، كلما هاج ذكركم ، % دموعا أغصت لهجتي بتكلم % 12(@)(@@) % وأنقاد طوعا للذي أنت أهله % على غلظة منكم لنا ، وتجهم % % 13(@)(@@) % ألام على حبي ، كأني سننته ، % وقد سن هذا الحب من قبل جرهم % % 14(@)(@@) % وقالت : أطعت الكاشحين ، ومن يطع % مقالة واش كاذب القول يندم % 15(@)(@@) % وصرمت حبل الود من ودك الذي % % حباك بمحض الود ، قبل لتفهم % % 16(@)(@@) % فقلت : اسمعي يا هند ثم تفهمي % % مقالة محزون بحبك مغرم % 17(@)(@@) % لقد مات سري و ستقامت مودتي ، % ولم ينشرح ب لقول يا حبتي فمي % % 18(@)(@@) % فإن تقتلي في غير ذنب ، أقل لكم % مقالة مظلوم مشوق متيم % 19(@)(@@) % هنيئا لكم قتلي ، وصفو مودتي ، % فقد سيط من لحمي هواك ، ومن دمي % % PageV01P440 البحر : رمل تام 1(@)(@@) % لمن الدار كخط ب لقلم ، % لم يغير رسمها طول القدم % 2(@)(@@) % صاح إني شفني طول السقم ، % وصبا القلب إلى أم الحكم % 3(@)(@@) % وصبا القلب إلى بهنانة ، % مثل قرن الشمس يبدو في الظلم % % 4(@)(@@) % ما رأت عيني لها ، فيما ترى ، % شبها في أهل حل وحرم % 5(@)(@@) % وطري ، حسن تقويسه ، % زانها ذاك ، وعرنين أشم % 6(@)(@@) % وبثغر واضح أنيابه ، % طيب الريح ، جميل المبتسم % PageV01P441 البحر : كامل تام 1(@)(@@) % من عاشق ، كلف الفؤاد ، متيم % يهدي السلام إلى المليحة كلثم % 2(@)(@@) % ويبوح ب لسر المصون ، وب لهوى % % يدري 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms96# ، ليعلمها بما لم تعلم % 3(@)(@@) % كي لا تشك على التجنب انها % % عندي بمنزلة المحب المكرم % % 4(@)(@@) % أخذت من القلب العميد بقوة ، % ومن الوصال بمتن حبل مبرم % 5(@)(@@) % وتمكنت في النفس ، حيث تمكنت % نفس المحب من الحبيب المغرم % % 6(@)(@@) % ولقد قرأت كتابها ، ففهمته ، % لو كان غير كتابها لم افهم % % 7(@)(@@) % عجمت عليه بكفها ، وبنانها ، % من ماء مقلتها بغير المعجم % 8(@)(@@) % ومشى الرسول بحاجة مكتومة ، % لولا ملاحة بعضها لم تكتم % 9(@)(@@) % في غفلة ممن نحاذر قوله ، % وسواد ليل ، ذي دواج ، مظلم % % 10(@)(@@) % ديني ودينك يا كليثم واحد ، % نرفض ، وقيتك ، ديننا ، أو نسلم % % PageV01P442 البحر : طويل 1(@)(@@) % رأيت بجنب الخيف هندا ، فراقني % % لما هيد ريم زينته الصرائم % 2(@)(@@) % وذو أشر عذب كأن نباته % جنى أقحوان ، نبته متناعم % 3(@)(@@) % نظرت إليها ب لمحصبه من منى % % ولي نظر ، لولا التحرج ، عارم % % 4(@)(@@) % فقلت : أشمس أم مصابيح بيعة ، % بدت لك تحت السجف أم انت حالم ؟ % 5(@)(@@) % مهفهفة ، غراء صفر وشاحها ، % وفي المرط منها أهيل متراكم % % 6(@)(@@) % بعيدة مهوى القرط ، إما لنوفل % أبوها ، وإما عبد شمس ، وهاشم % 7(@)(@@) % ومد عليها السجف يوم لقيتها ، % على عجل ، تباعها والخوادم % % 8(@)(@@) % فلم استطعها غير أن قد بدا لنا ، % عشية راحت ، كفها والمعاصم % % 9(@)(@@) % معاصم لم تضرب على البهم ب لضحى % % عصاها ، ووجه لم تلحه السمائم % 10(@)(@@) % نضير ، ترى فيه أساريع مائه ، % صبيح ، تغاديه الاكف النواعم % % PageV01P443 11(@)(@@) % إذا ما دعت أترابها ، ف كتنفنها ، % تمايلن أو مالت بهن المآكم % 12(@)(@@) % طلبن الصبا حتى إذا ما أصبنه % نزعن ، وهن المسلمات الظوالم % % 13(@)(@@) % فذكرتها داء قديما مخامرا % تقطع منه إن ذكرن الخيازم % 14(@)(@@) % وقربك لا يجدي علي ، ونأيكم % جوى داخل في القلب يا هند لازم % % 15(@)(@@) % فإن بنت كدرت المعاش صبابة ، % وإن تصقبي فالقلب حيران هائم % % 16(@)(@@) % وقد زعمت أن الذي وجدت بنا % % مقيم لنا في أسود القلب ، دائم % % PageV01P444 البحر : طويل 1(@)(@@) % أقل الملام ، يا عتيق ، فإنني % % بهند ، طوال الدهر ، حران هائم % 2(@)(@@) % فقض ملامي ، و طلب الطب ، إنني % % أسر جوى في حبها ، فهو رازم % 3(@)(@@) % فقال : عليك اليوم أسماء ، إنها % % أطب بهذا ، والمباطن عالم % % 4(@)(@@) % فقلت لأسماء اشتكاء ، وأخضلت % مسارب عيني الدموع السواجم % 5(@)(@@) % أبيني لنا ، كيف السبيل إلى التي % % نأت غربة عنا 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms97# بها ما تلائم % 6(@)(@@) % فقالت ، وهزت رأسها : لو أطعتنا ، % تجنبتها أيام قلبك سالم % % 7(@)(@@) % ولكن دعت للحين عين مريضة ، % فطاوعتها ، عمدا ، كأنك حالم % 8(@)(@@) % وكنت تبوعا للهوى ، مصحبا له ، % إذا أعجبتك الآنسات النواعم % 9(@)(@@) % تكلف أفراس الصبى ، تعبا له ، % ولست تبالي أن تلوم اللوائم % 10(@)(@@) % ووكلت أفراس الصبى بطلابها % % زمانا ، فقد هانت عليك الملاوم % PageV01P445 11(@)(@@) % وعلقتها ، أيام قلبك موثق % لديها ، فدعها الآن ، إذ أنت سالم % % 12(@)(@@) % فقلت لها : أنى سلمت ، وحبها % % جوى لبنات القلب ، يا أسم ، لازم % % 13(@)(@@) % وأنى سلو القلب عنها ، وقد سبا % % فؤادي منها ذو غدائر فاحم % 14(@)(@@) % وجيد غزال فائق الدر حليه ، % ورخص لطيف ، واضح اللون ، ناعم % PageV01P446 البحر : سريع 1(@)(@@) % يا من لقلب دنف مغرمش ، % هام إلى هند ، ولم يظلم % 2(@)(@@) % هام إلى رئم هضيم الحشا ، % عذب الثنايا ، طيب المبسم % % 3(@)(@@) % كالشمس بالأسعد ، إذ أشرقت ، % في يوم دجن ، بارد ، مقتم % % 4(@)(@@) % لم أحسب الشمس بليل بدت % قبلي ، لذي لحم ، ولا ذي دم % 5(@)(@@) % قالت ، وقد جد رحيل بها ، % و لعين إن تطرف بها ، تسجم % 6(@)(@@) % إن ينسنا الموت ، ويؤذن لنا ، % نلقك ، إن عمرت ب لموسم % 7(@)(@@) % إن لم تحل ، أو تك ذا ميلة ، % بطرفك الأدنى على الأقدم % 8(@)(@@) % قلت لها : بل أنت معتلة % في الوصل ، يا هند ، لكي تصرمي % % PageV01P447 البحر : طويل 1(@)(@@) % ألما بذات الخال ، فاستطلعا لنا % % على العهد ، باق ودها أم تصرما % % 2(@)(@@) % وقولا لها : إن النوى أجنبية % بنا ، وبكم ، قد خفت أن تتتمما % % 3(@)(@@) % شطون بأهواء نرى أن قربنا % % وقربكم ، إن يشهد الناس موسما % % 4(@)(@@) % وقولا لها : لا تقبلي قول كاشح ، % وقولي له ، إن زل : أنفك أرغما % % 5(@)(@@) % وقولا لها : لم يسلنا النأي عنكم ، % ولا قول واش كاذب إن تنمما % % 6(@)(@@) % وقولا لها : ما في العباد كريمة % أعز علينا منك طرا وأكرما % % 7(@)(@@) % وقولا لها : لا تسمعن لكاشح % مقالا ، وإن أسدى لديك وألحما % % 8(@)(@@) % وقولا لها : لم اجن ذنبا ، فتعتبي % % علي بحق ، بل عتبت تجرما % % 9(@)(@@) % فقالا لها ، فآرفض فيض دموعها ، % كما أسلم السلك الجمان المنظما % % 10(@)(@@) % تحدر غصن البان لانت فروعه ، % وجادت عليه ديمة ، ثم أرهما % % PageV01P448 11(@)(@@) % فلما رأت عيني عليها ، تهللت % مخافة أن ينهل كرها ، تبسما % % 12(@)(@@) % وقالت لأختيها : اذهبا في حفيظة 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms98# ، % فزورا أبا الخطاب سرا ، وسلما % % 13(@)(@@) % وقولا له : والله ما الماء للصدى ، % بأشهى إلينا من لقائك ، فاعلما % % 14(@)(@@) % وقولا له : ما شاع قول محرش % لدي ، ولا رام الرضا ، أم ترغما % % 15(@)(@@) % وقولا له : إن تجن ذنبا أعده % % من العرف إن رام الوشاة التكلما % % 16(@)(@@) % فقلت : اذهبا قولا لها : أنت همه ، % وكبر مناه من فصيح وأعجما % % 17(@)(@@) % إذا بنت بانت لذة العيش و لهوى % % وإن قربت دار بكم ، فكأنما % % 18(@)(@@) % يرى نعمة الدنيا حتواها لنفسه % يرى اليأس غبنا و قترابك مغنما % % 19(@)(@@) % فلم تفضلينا في هوى ، غير أننا % % نرى ودنا أبقى بقاء ، وأدوما % % PageV01P449 البحر : طويل 1(@)(@@) % وآخر عهدي بالرباب مقالها ، % لنا ليلة البطحاء ، والدمع يسجم : % 2(@)(@@) % طربت ، وطاوعت الوشاة ، وبينت % شمائل من وجد ، ففيم التجرم ؟ % 3(@)(@@) % هلم فأخبرني بذنبي ، أعترف % بعتباك ، أو أعرف إذا كيف أصرم % % 4(@)(@@) % فإن كان في ذنب إليك اجترمته ، % تعمدته عمدا ، فنفسي ألوم % % 5(@)(@@) % وإن كان شيئا قاله لك كاشح ، % كما شاء يسديه علي ، ويلحم % % 6(@)(@@) % فصدقته ، لم أستطع أن أرده ، % ولم أملك الأعداء أن يتكلموا % % 7(@)(@@) % فقلت ، وكانت حجة وافقت بها ، % من الحق عندي بعض ما كنت أعلم : % 8(@)(@@) % صدقت ، ومن يعلم فيكتم شهادة % على نفسه أو غيره ، فهو أظلم % % 9(@)(@@) % فأما الذي فيه عتبت ، فأنفه % % لأنفك في صرم الخلائق أرغم % % 10(@)(@@) % فعتباك مني أنني غير عائد ، % وأقسم بالرحمن لا نتكلم % % PageV01P450 11(@)(@@) % وقلت لها : لو يسلك الناس واديا % وتنحين نحو الشرق عما تيمموا % % 12(@)(@@) % لكلفني قلبي أتابعك ، إنني % % بذكراك أخرى الدهر ، صب متيم % 13(@)(@@) % أرى ما يلي نجدا ، إذا ما حللته ، % جميلا ، وأهوى الغور إن تتتهموا % % PageV01P451 البحر : طويل 1(@)(@@) % يلومونني في غير ذنب جنيته ، % وغيري ، في كل الذي كان ، الوم % 2(@)(@@) % أمنت اناسا أنتم تأمنونهم ، % فزادوا علينا في الحديث ، وأوهموا % % 3(@)(@@) % وقالوا لنا ما لم نقل ، ثم أكثروا % % علينا ، وباحوا بالذي كنت اكتم % % 4(@)(@@) % وقد كحلت عيني القذى لفراقكم ، % وعاد لها تهتانها فهي تسجم % 5(@)(@@) % فلا تصرميني ، إن تريني أحبكم ، % أبوء بذنبي ، إنني أنا أظلم % 6(@)(@@) % منعمة ، لو دب ذر بجسمها ، % لكاد دبيب الذر في الجسم يكلم % 7(@)(@@) % أليس كثيرا أن نكون ببلدة ، % كلانا بها ثاو ، ولا نتكلم ؟ % PageV01P452 البحر : طويل 1(@)(@@) % ذهبت ولم تلمم 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms99# بديباجة الحرم ، % وقد كنت منها في عناء وفي سقم % 2(@)(@@) % جننت بها ، لما سمعت بذكرها ، % وقد كنت مجنونا بجاراتها القدم % PageV01P453 البحر : طويل 1(@)(@@) % هجرت الحبيب اليوم من غير ما اجترم ، % وقطعت ، من ودي لك ، الحبل ف نصرم % 2(@)(@@) % أطعت الوشاة الكاشحين ، ومن يطع % مقالة واش ، يقرع السن من ندم % 3(@)(@@) % أتاني رسول ، كنت أحسب أنه % شفيق علينا ناصح ك لذي زعم % 4(@)(@@) % فلما تباثثنا الحديث ، وبينت % سريرته أبدى الذي كان قد كتم % 5(@)(@@) % تبين لي ان المحرش كاذب ، % ومن يطع الواشين أو زعم من زعم % % 6(@)(@@) % يصرم بظلم حبله من خليله % وشيكا ، ويجذم قوة الحبل ما جذم % % 7(@)(@@) % وقلت لها لما خشيت لجاجة : % فعندي لك العتبى على رغم من رغم % % 8(@)(@@) % ظلمت ، ولم تعتب ، وكان رسولها % % إليك ، سريعا ب لرضا لك ، إذ ظلم % 9(@)(@@) % فلم أر لوم النفس بعد الذي مضى ، % وبعد الذي آلت وآليت من قسم % 10(@)(@@) % إذا انت لم تعشق ، ولم تتبع الهوى ، % فكن صخرة ب لحجر من حجر أصم % % PageV01P454 البحر : طويل 1(@)(@@) % خليلي ، عوجا نبك شجوا على رسم % عفا بين واد للعشيرة ف لحزم % 2(@)(@@) % خليلي ، ما كانت تصاد مقاتلي ، % ولا غرتي ، حتى وقعت على نعم % 3(@)(@@) % خليلي ، حتى لف حبلي بخادع % موقى إذا يرمى ، صيود إذا يرمي % % 4(@)(@@) % خليلي ، إن باعدت لانت ، وإن ألن % تباعد ، فما ترجى لحرب ولا سلم % % 5(@)(@@) % خليلي ، إن الحب أحسب قاتلي ، % فقاض على نفسي كما قد برى عظمي % % 6(@)(@@) % خليلي ، من يكلف بآخر كالذي % % كلفت به يدمل فؤادا على سقم % 7(@)(@@) % خليلي ، بعض اللوم ، لا ترحلا به % % رفيقكما ، حتى تقولا على علم % 8(@)(@@) % خليلي ، ما حب كحب أحبه ، % ولا داء ذي حب كدائي ولا همي % % 9(@)(@@) % خليلي ، قد أعيا العزاء ، فخففا % % ولا تبديا لومي ، فينبيكما جسمي % % 10(@)(@@) % خليلي ، منا لا تكونا مع العدى ، % وما اللوم ب لمسلي فؤادي من الغم % PageV01P455 11(@)(@@) % خليلي ، لو يرقى خليل من الهوى ، % رقيت بما يدني النوار من العصم % % PageV01P456 البحر : طويل 1(@)(@@) % دعاني إلى أسماء عن غير موعد % صروف منايا كان وقفا حمامها % % 2(@)(@@) % فلما لتقينا ، شف برد محقق % عن الشمس ، جلى يوم دجن غمامها % % 3(@)(@@) % وقلن لها والعين حولك جمة ، % ومثلك 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms100# باد ، مستثار مقامها : % 4(@)(@@) % أيخفى لنا وللمغيري مجلس ، % فإن النوى كانت قليلا لمامها % % 5(@)(@@) % بنا وبه فاربعن ، نعهد مسلما ، % عسى أن يقضى من نفوس سقامها % % 6(@)(@@) % فقلن : عديه دلجة الركب ، إنه % سيسترنا عن عين أرض ظلامها % % PageV01P457 البحر : طويل 1(@)(@@) % بوجرة أطلال تعفت رسومها ، % وأقفر من بعد الأنيس قديمها % % 2(@)(@@) % تلوح على طول الزمان عراصها ، % كما لاح في كف الفتاة وشومها % % 3(@)(@@) % وقفت بها ، والعين شاملة القذى ، % كعين طريف ما يجف سجومها % % 4(@)(@@) % فذلك هاج الشوق من ام نوفل ، % وذكرى لنفس جمة ما تريمها % % 5(@)(@@) % فقد ادركت عندي من الود فوق ما % % تمنت بغيب ، أو تمنى حميمها % % 6(@)(@@) % وإن قاسمت في وده ، ذهبت به % جميعا ، ولم يرجع بشيء قسيمها % % PageV01P458 البحر : طويل 1(@)(@@) % أباكرة في الظاعنين رميم ، % ولم يشف متبول الفؤاد ، سقيم ؟ % 2(@)(@@) % أم اتعد الحي الرواح ، فإنني % % لكل الذي ينوي الأمير وجوم % 3(@)(@@) % فراحوا ، وراحت ، و ستمرت كأنها % % غمامة دجن تنجلي ، وتغيم % 4(@)(@@) % مبتلة ، صفراء ، مهضومة الحشا ، % غذاها سرور دائم ، ونعيم % % 5(@)(@@) % قد اعتدلت فالنصف من غصن بانة % ونصف كثيب لبدته سجوم % % 6(@)(@@) % منعمة ، أهدى لها الجيد شادن ، % وأهدت لها العين القتول بغوم % 7(@)(@@) % تراخت بها دار ، وأصبحت العدى % % لديها ، كما شاؤوا ، وقال نموم % % 8(@)(@@) % رميم لتي قالت لجارات بيتها : % ضمنت لكم أن لا يزال يهيم % % 9(@)(@@) % ضمنت لكم أن لا يزال كأنه ، % لطيف خيال من رميم غريم % 10(@)(@@) % وقالت لأتراب لها شبه الدمى ، % تنكبن شيئا ، والدموع سجوم % % PageV01P459 11(@)(@@) % وللفتية : نحازوا قليلا فإنه % لنا في أمور قد خلون ظلوم % % PageV01P460 البحر : وافر تام 1(@)(@@) % أقول لصاحبي ، ومثل ما بي ، % شكاه المرء ذو الوجد الأليم % 2(@)(@@) % إلى الأخوين مثلهما إذا ما % % تأوبه مؤرقة الهموم % 3(@)(@@) % لحيني والبلاء لقيت ظهرا ، % بأعلى النقع ، أخت بني تميم % 4(@)(@@) % فلما أن بدا للعين منها % % أسيل الخد ، في خلق عميم % 5(@)(@@) % وعينا جؤذر خرق ، وثغر % كمثل الأقحوان ، وجيد ريم % 6(@)(@@) % حنا أترابها دوني عليها % % حنو العائدات على سقيم % 7(@)(@@) % عقائل لم يعشن بعيش بؤس ، % ولكن ب لغضارة والنعيم % % PageV01P461 البحر : كامل تام 1(@)(@@) % يا صاح ، قل للربع : هل يتكلم ، % فيبين عما سيل ، أو يستعجم % 2(@)(@@) % فثنى مطيته علي ، وقال لي : % اسأل ، وكيف يبين رسم أعجم ؟ % 3(@)(@@) % درجت عليه العاصفات 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms101# فقد عفت % آياته ، إلا ثلاث جثم % % 4(@)(@@) % عجت القلوص به ، وعرج صحبتي % % وكففت غرب دموع عين تسجم % 5(@)(@@) % أدم الظباء به تراعي خلفة % وسخالها في رسمه تتبغم % 6(@)(@@) % وثنى صبابة قلبه بعد البلى % % ورقاء ظلت في الغصون ترنم % 7(@)(@@) % غردت على فنن ، فأسعد شجوها % % ورق يجبن ، كما ستجابب المأتم % 8(@)(@@) % هل عيشنا بمنى يعود كعهدنا ، % إذ لا نراع ، ولا يطاع اللوم % % 9(@)(@@) % أيام هند لا تطيع محرشا ، % خطل المقال ، وسرنا لا يعلم % % 10(@)(@@) % وعشية حبست ، فلم تفتح فما % بكلامها من كاشح يتنمم % PageV01P462 11(@)(@@) % نظرت إليك ، وذو شبام دونها ، % نظرا يكاد بسرها يتكلم % % 12(@)(@@) % فأبان رجع الطرف أن لا ترحلن % حتى يجن الناس ليل مظلم % % 13(@)(@@) % فلعل غب الليل يستر مجلسا ، % فيه يودع عاشق ، ويسلم % % 14(@)(@@) % فأتيت أمشي ، بعدما نام العدى ، % وأجنهم للنوم جونق أدهم % 15(@)(@@) % فإذا مهاة ، في مها ، بخميلة ، % أدم ، أطاع لهن واد ملحم % 16(@)(@@) % حيينها فتبسمت ، فكأنها % % عند التبسم مزنة تتبسم % 17(@)(@@) % وتضوعت مسكا وسر فؤادها % % فسرورها باد لمن يتوسم % % 18(@)(@@) % فغنيت جذلانا ، وقد جذلت بنا % % نبغي بذلك رغم من يترغم % % 19(@)(@@) % ثم انصرفت ، وكان آخر قولها % % أن سوف يجمعنا إليك الموسم % PageV01P463 البحر : كامل تام 1(@)(@@) % قل للمنازل بالكديد : تكلمي ، % درست ، وعهد جديدها لم يقدم % 2(@)(@@) % لعبت بجدتها الرياح وتارة % تعتادها ديم بأسحم مرهم % 3(@)(@@) % دار التي صادت فؤادك ، إذ بدت % بالخيف ، لما التف أهل الموسم % % 4(@)(@@) % قالت لآنسة رداح عندها % % ك لرئم في عقد الكثيب الأيهم % 5(@)(@@) % هذا الذي منح الحسان فؤاده ، % وشركنه في مخه والأعظم ؟ % 6(@)(@@) % قالت : نعم ، فتنكبي بي ، إنه % % ذرب اللسان ، إخاله لم يسلم % % 7(@)(@@) % فبعثت جاريتي ، فقلت لها : ذهبي % % فاشكي إليها ما علمت وسلمي % % 8(@)(@@) % قولي : يقول : تحوبي في عاشق ، % كلف بكم حتى الممات متيم % 9(@)(@@) % فكي رهينته ، فإن لم تفعلي ، % ف بكي على قتل بن عمك و سلمي % % 10(@)(@@) % ويقول إنك قد علمت بأنكم % أصبحتم يا بشر أوجه ذي دم % % PageV01P464 11(@)(@@) % فتبسمت عجبا ، وقالت : حقه % أن لا يعلمنا بما لم نعلم % % 12(@)(@@) % علمي به ، والله يغفر ذنبه ، % فيما بدا لي ذو هوى متقسم % % 13(@)(@@) % طرف ينازعه إلى الأدنى الهوى ، % ويبت خلة ذي الوصال الأقدم % % 14(@)(@@) % وتغاطست عما بنا ، ولقد ترى % % أن قد 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms102# تخللت الفؤاد بأسهم % % 15(@)(@@) % قالت لها : ماذا أرد على فتى ، % أقصدته بعفافة وتكرم ؟ % 16(@)(@@) % قالت أقول له بأنك مازح % كلف بكل مغور ومتهم % 17(@)(@@) % قالت لها : بل قد أردت بعاده ، % لما عرفت بأن ملكت ، فتممي % % PageV01P465 البحر : كامل تام 1(@)(@@) % باسم الإله ، تحية لمتيم ، % تهدى إلى حسن القوام مكرم % 2(@)(@@) % وصحيفة ضمنتها بأمانة ، % عند الرحيل ، إليك ، أم الهيثم % 3(@)(@@) % فيها التحية ، والسلام ، ورحمة ، % حف الدموع كتابها ب لمعجم % 4(@)(@@) % من عاشق كلف يبوء بذنبه ، % صب الفؤاد معاقب لم يظلم % 5(@)(@@) % بادي الصبابة ، قد ذهبت بعقله ، % كلف بحبك ، يا عثيم ، متيم % 6(@)(@@) % يشكو إليك بعبرة وبعولة % ويقول : أما إذ مللت ، فأنعمي % % 7(@)(@@) % لا تقتليني ، يا عثيم ، فإنني % % أخشى عليك عقاب ربك في دمي % % 8(@)(@@) % إن لم يكن لك رحمة وتعطف ، % فتحرجي من قتلنا أن تأثمي % % 9(@)(@@) % لم يخط سهمك ، إذ رميت مقاتلي ، % وتطيش عنك ، إذا رميتك ، أسهمي % % 10(@)(@@) % ووجدت حوض الحب ، حين وردته ، % مر المذاقة ، طعمه كالعلقم % % PageV01P466 11(@)(@@) % لا والذي بعث النبي محمدا % ب لنور والإسلام دين القيم % 12(@)(@@) % وبما أهل به الحجيج وكبروا ، % عند المقام وركن بيت المحرم % % 13(@)(@@) % والمسجد الأقصى المبارك حوله ، % والطور ، حلفة صادق لم يأثم % % 14(@)(@@) % ما خنت عهدك ، يا عيثم ، ولا هفا % % قلبي إلى وصل لغيرك فاعلمي % % 15(@)(@@) % فكي أسيرا ، يا عيثم ، فإنه % خلط الحياء بعفة وتكرم % 16(@)(@@) % ورعى الأمانة ، في المغيب ، ولم يخن % غيب الصديق ، وذاك فعل المسلم % 17(@)(@@) % أحصيت خمسة أشهر معدودة % وثلاثة ، من بعدها ، لم توهم % % 18(@)(@@) % هذي ثمانية تهل وتنقضي ، % عالجت فيها سقم صب مغرم % 19(@)(@@) % مكث الرسول لديكم ، حتى إذا % % قدم الرسول ، وليته لم يقدم % % 20(@)(@@) % لم يأتني لكم بخط واحد % يشفي غليل فؤادي المتقسم % % PageV01P467 21(@)(@@) % وحرمتني رد السلام ، وما أرى % % رد السلام على الكريم بمحرم % % 22(@)(@@) % إن كنت عاتبة علي ، فأهل ما % % أن تعتبي فيما عتبت وتكرمي % % 23(@)(@@) % أنت الأميرة ، ف سمعي لمقالتي % % وتفهمي من بعض ما لم تفهمي % % 24(@)(@@) % إني أتوب إليك توبة مذنب % يخشى العقوبة من مليك منعم % 25(@)(@@) % حتى انال رضاك ، حيث علمته ، % بطريف مالي والتليد الأقدم % % 26(@)(@@) % وأعوذ منك بك ، الغداة ، لتصفحي % % عما جنيت من الذنوب ، وترحمي % % 27(@)(@@) % إن تقبلي عذري ، فلست بعائد ، % حتى تغادر في المقابر 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms103# أعظمي % % 28(@)(@@) % لو كفي اليمنى سأتك قطعتها % % ولذقت ، بعد رضاك ، عيش الأجذم % PageV01P468 البحر : خفيف تام 1(@)(@@) % ذكرتني الديار شوقا قديما % % بين خيص ، وبين أعلى يسوما % % 2(@)(@@) % بالشليل الذي أتى عن يميني ، % قد تعفت إلا ثلاثا جثوما % % 3(@)(@@) % وقليبا مسحجا أوطن العر % % صة ، فردا ، أبى بها أن يريما % % 4(@)(@@) % وعراصا تذري الرياح عليها % % ذا بروق جونا أجش هزيما % % 5(@)(@@) % ودعاء الحمام تدعو هديلا ، % بين غصنين ، هاج قلبا سقيما % % 6(@)(@@) % غردا ، فاستمعت للصوت ، فانهل % % ت دموعي حتى ظللت كظيما % % 7(@)(@@) % عجت فيه ، وقلت للركب : عوجوا ، % ودموع العينين تذرى سجوما % % 8(@)(@@) % فثنوا هزة المطي ، وقالوا : % كيف نرجو من عرصة تكليما ! ؟ % 9(@)(@@) % ومقاما قمنا به ، نتقي العي % ن ، لهونا به ، وذقنا النعيما % % 10(@)(@@) % من لدن فحمة العشاء إلى أن % لاح ورد يسوق جونا بهيما % % PageV01P469 11(@)(@@) % وقمير بدا ابن خمس وعش % % ن له قالت الفتاتان : قوما % % 12(@)(@@) % ثم قالت ، ودمعها يغسل الكح % % ل مرارا ، يخال درا نظيما % % 13(@)(@@) % لا يكونن آخر العهد هذا ، % يا ابن عمي ، ولا تطيعن نموما % % 14(@)(@@) % ثم قالت لتربها : إن قلبي % % من هواه أمسى مصابا كليما % % 15(@)(@@) % رب ليل ، سمرت فيه ، قصير % % PageV01P470 البحر : خفيف تام 1(@)(@@) % يا ثريا الفؤاد ردي السلاما % % وصلينا ، ولا تبتي الزماما % % 2(@)(@@) % و ذكري ليلة المطارف والوب % وإرسالنا إليك الغلاما % % 3(@)(@@) % بحديث ، إن أنت لم تقبليه ، % لم أنازعك ، ما حييت ، الكلاما % % 4(@)(@@) % و ذكري مجلسا لدى جانب القص % ر عشيا ومقسمي أقساما % % 5(@)(@@) % في ليال منهن ليلة باتت % ناقتي والها ، تجر الزماما % % 6(@)(@@) % يغسل القطر رحلها ، لا أبالي % % أن تبل السماء عضبا حساما % % 7(@)(@@) % إن تكوني نزحت أو قدم العه % د فما زايل الوداد العظاما % % 8(@)(@@) % من يكن ناسيا فلم أنس منها % % وهي تذري لذاك دمعا سجاما % % 9(@)(@@) % يوم قالت ، ودمعها يغسل الكح % ل : أردت الغداة منا نصراما % % 10(@)(@@) % حلت عن عهدنا ، وطاوعت حسا % % دا قيما كانوا عليك رغاما % % PageV01P471 11(@)(@@) % قلت : لم تصرمي ، ولم نطع الوا % % شي ، وقد زدت ذا الفؤاد غراما % % PageV01P472 البحر : بسيط تام 1(@)(@@) % إني أتتني شكوى لا أسر بها ، % وذرو قول ، ولم نخش الذي نجما % % 2(@)(@@) % حتى تبدى ، ولم أعلم بقائله % وقد أكون بما حاولته فهما % % 3(@)(@@) % لا يرغم الله أنفا أنت حامله ، % بل 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms104# أنف شانبك فيما سركم رغما % % 4(@)(@@) % إن كان غاظك شيء لست أعلمه ، % مني ، فهذي يميني بالرضا سلما % % 5(@)(@@) % ما تشتهين فإني اليوم فاعله ، % والقلب صب فما جشمته جشما % % 6(@)(@@) % لا ترجعيني إلى من ليس يرحمني ، % فداك من تبغضين الحتف والسقما % % 7(@)(@@) % إن الوشاة كثير ، إن أطعتهم ، % لا يرقبون بنا إلا ، ولا ذمما % % 8(@)(@@) % إن كنت أممت سخطا عامدا لكم ، % فلا أرحت إذا أهلا ، ولا نعما ! % 9(@)(@@) % أو كنت أحببت حبا مثل حبكم ، % فلا أقلت إذا نعلي لي القدما % % PageV01P473 البحر : خفيف تام 1(@)(@@) % عاود القلب ، يا لقومي ، سقما ، % يوم أبدت لنا قريبة صرما % % 2(@)(@@) % صرمتني ، وما اجترمت إليها ، % غير أني أرعى المودة ، جرما % % 3(@)(@@) % حرة من نساء عبد مناف ، % جمعت منطقا ، وعقلا ، وجسما % % 4(@)(@@) % عمها خالها ، وإن عد يوما ، % كان خالا لها ، إذا عد عما % % 5(@)(@@) % صرمتني ، والله ، في غير ذنب ، % رب موسى ، أميرة القلب ، ظلما % % 6(@)(@@) % قلت ، لما اتاني القول زورا : % ليت شعري من صاغ ذا ، ثم نما % % 7(@)(@@) % كيف أسلو ، وكيف أصبر عنها ، % يا لقومي ، وحبها كان غرما % % 8(@)(@@) % ليت شعري ، يا بكر ، هل كان هذا ، % أم يراه الإله ب لغيب رجما % % 9(@)(@@) % قال : مهلا ، فلا تظنن هذا ، % عمرك لله ما قتلناه علما % % 10(@)(@@) % قلت : اذهب ، ولا تلبث لشيء ، % واستمع ، واعلم الذي كان نما % % PageV01P474 11(@)(@@) % فمضى نحوها بعقل وحزم % واحتيال ، ونصح حب ، فلما % % 13(@)(@@) % % وبرى لحمه ، فلم يبق لحما ؟ % 14(@)(@@) % فاستفزت لقوله ، ثم قالت : % لا وربي ، يا بكر ، ما كان مما % % 15(@)(@@) % قيل حرف ، فلا تراعن منه ، % بل نرى وصله ، وربي ، مما % % 16(@)(@@) % لعن الله من تقول هذا ، % وثنى من وشى بلعن ، وهما % % 17(@)(@@) % ليسوء الصديق ب لصرم منا % % زيد أنف العداة بالوصل رغما % % PageV01P475 البحر : خفيف تام 1(@)(@@) % يا خليلي ، عادني اليوم سقمي % % فبرى داؤه ، لحيني ، عظمي % % 2(@)(@@) % لمصر أصر و ستكبر اليو % وظن الصدود ليس بظلم % 3(@)(@@) % صد عمدا ، فباء ، إذ صد عني ، % يا خليلي بإثمه وبإثمي % % 4(@)(@@) % إن تجودي ، أو تبخلي ، فبحمد % أنت من واصل لنا ، لا تذمي % % 5(@)(@@) % أو تقولي : ما زلت في الشعر ، حتى % % بحت للناس ، غير أن لم تسم % 6(@)(@@) % فالمحل الذي حللت به والحس % % حسن ، أبدى عليك ما كنت أكمي % % 7(@)(@@) % بيتك 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms105# البيت ، تسقفين عليه ، % وعلى صالح الخلائق ينمي % % 8(@)(@@) % أنت في الجوهر المهذب ، من % % م ، ذرى المجد ، بين خال وعم % PageV01P476 البحر : خفيف تام 1(@)(@@) % طال ليلي ، و عتادني اليوم سقم ، % وأصابت مقاتل القلب نعم % 2(@)(@@) % قصدت نحو مقتلي بسهام ، % نافذات ، وما تبين كلم % 3(@)(@@) % حرة الوجه والشمائل والجو % هر ، تكليما لمن نال غنم % 4(@)(@@) % وحديث ، بمثله تنزل العص % رخيم ، يشوب ذلك حلم % 5(@)(@@) % سلب القلب دلها ، ونقي % مثل جيد الغزال يعلوه نظم % % 6(@)(@@) % ونبيل عبل الروادف ، ك لقو % % ر من الرمل قد تبلد ، فعم % 7(@)(@@) % ووضيء ك لشمس بين سحاب % رائح ، مقصر العشية ، فخم % 8(@)(@@) % وشتيت ، أحوى المراكز ، عذب ، % ما له في جميع ما ذيق طعم % 9(@)(@@) % طفلة كالمهاة ، ليس لمن عا % % ب ، إذا تذكر المعايب ، وصم % 10(@)(@@) % هكذا وصف ما بدا لي منها ، % ليس لي ب لذي تغيب علم % PageV01P477 11(@)(@@) % غير أني أرى الثياب ملاء % في يفاع ، يزين ذلك جسم % % 12(@)(@@) % إن تجودي ، أو تبخلي ، فبحمد ، % لست ، يا نعم ، فيهما من يذم % PageV01P478 البحر : طويل 1(@)(@@) % أقلي البعاد ، أم بكر ، فإنما % % قصارى الحروب أن تعود إلى سلم % 2(@)(@@) % فوالله ، ما للعيش ، ما لم ألاقكم ، % وما للهوى ، إذا ما تزارين ، من طعم % 3(@)(@@) % وما لي صبر عنكم ، قد علمتم ، % ولا لك عنا من عزاء ، ولا عزم % % 4(@)(@@) % فقولي ، لواشينا ، كما كنت قائلا ، % لواشيكم : رغما عصيت على رغم ! % 5(@)(@@) % كلانا أراد الصرم ، ما سطاع جاهدا ، % فأعيا قريبا م السماحة والصرم % 6(@)(@@) % ألم تعلمي ما كنت آليت فيكم ، % وأقسمت لا تخلين ذاكرة باسمي % % PageV01P479 البحر : كامل تام 1(@)(@@) % يا ليلة ، قطع الصباح نعيمها ، % عودي علي ، فقد أصبت صميمي % % 2(@)(@@) % ما إن رأيت ، ولا سمعت كليلة ، % في غير سوء عند بيت حكيم % % 3(@)(@@) % مثل لتي نكبت فؤادي نكبة % تركت حليما ، وهو غير حليم % 4(@)(@@) % يا ليل ، يا ذات البهاء لأهلها ، % إني ظلمت ، ولمت غير مليم % 5(@)(@@) % ولقد ذكرتك ، يا بهية ، بعدما % % ذهب الكرى بمجالسي ونديمي % % 6(@)(@@) % فعليك ، يا ليلى ، السلام ، تحية % عدد النجوم ، وقل من تسليمي % % PageV01P480 البحر : رمل تام 1(@)(@@) % طال ليلي لسرى طيف ألم ، % فنفى النوم ، وأجداني السقم % 2(@)(@@) % طيف رئم ، شطة ، أوطانه ، % فهي لم تدن ، وليست بأمم % 3(@)(@@) % من رسول ناصح ، يخبرنا 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms106# % % عن محب مستهام قد كتم ؟ % 4(@)(@@) % حبه ، حتى تبلى جسمه ، % وبراه طول أحزان ، وهم % 5(@)(@@) % ذاك من يبخل عني ب لذي ، % لو به جاد ، شفاني من سقم % % 6(@)(@@) % كلما ساءلته خيرا ، أبى ، % وبلاء شد ظهرا ، واعتصم % % 7(@)(@@) % لج فيما بيننا قولا : بلا ، % ليت لا من قالها ، نال الصمم % % 8(@)(@@) % ولو اني كان ما أطلبه % % عندنا يطلبه ، قلت : نعم % 9(@)(@@) % وأراه كل يوم يجتني % % عللا ، في غير جرم يجترم % 10(@)(@@) % ظنها بي ظن سوء فاحش ، % وبها ظني عفاف وكرم % % PageV01P481 11(@)(@@) % وإذا قال مقالا ، جئته ، % وإذا قلت ، تأبى وظلم % % 12(@)(@@) % كيف هذا يستوي في حكمه ، % أنه بر ، وأني متهم ؟ % 13(@)(@@) % قد تراضيناه عدلا بيننا ، % وجعلناه أميرا وحكم % 14(@)(@@) % فعليه الآن أن ينصفنا ، % ويجد اليوم ما كان صرم % % 15(@)(@@) % أو يرد الحكم عنه بالرضى ، % فعلينا حكمه فيما حتكم % 16(@)(@@) % وله الحكم على رغم العدى ، % لا نبالي سخط من فيه رغم % % PageV01P482 البحر : منسرح 1(@)(@@) % وقف بربع أنساكه قدمه ، % جرت به الريح ، فامحى علمه % 2(@)(@@) % وقفت ب لربع ، كي أسائله ، % لو استطاع الكلام لم أرمه % 3(@)(@@) % ربع لرخص البنان مختضب ، % طوبى لمن بات ، وهو يلتثمه % 4(@)(@@) % ما زلت أصطاده ، واختله % يوما ، وأدنو له وأكتتمه % % 5(@)(@@) % حتى تركت الحبيب وامقنا ، % ينتابنا ماشيا به قدمه % % 6(@)(@@) % يطوف بالبيت ما يفارقه ، % قد شفه حبنا فلم يرمه % 7(@)(@@) % ما كنت أرعى المخاض ، قد علموا ، % ولا أنيخ البعير أختطمه % % PageV01P483 البحر : مجزوء الرمل 1(@)(@@) % هل عرفت ، اليوم ، من شن هل عرفت ، اليوم ، من شن % باء ، بالنعف ، رسوما % % 2(@)(@@) % غيرتها كل ريح % تذر الترب مسيما % % 3(@)(@@) % حرجفا تذري عليها % % أسحما جونا هزيما % % 4(@)(@@) % ولقد ذكرني الرب % ع شؤونا لن تريما % % 5(@)(@@) % يوم أبدت بجنوب ال % % خيف ، رفافا وسيما % % 6(@)(@@) % وشتيتا باردا تح % سبه درا نظيما % % 7(@)(@@) % ثم قالت ، وهي تذري % % دمع عينها سجوما % % 8(@)(@@) % للثريا : قد أبى ه % % ذا المعنى أن يدوما % % 9(@)(@@) % أخبريه بالذي أل % % قى ، فإن كان مقيما % % 10(@)(@@) % فليعدنا موعدا لا % % نتقي فيه نموما % % PageV01P484 11(@)(@@) % وليكن ذاك إذا ما % % انتصف الليل بهيما % % 12(@)(@@) % برزت بين ثلاث % كالمها تقرو الصريما % % 13(@)(@@) % قمر ، بدر ، تبدى % % باهرا ، يعشي النجوما % % 14(@)(@@) % قلت : أهلا بكم ، من % زور زرن كريما % % 15(@)(@@) % فأذاقتني لذيذا ، % خلته راحا ختيما % % 16(@)(@@) % شابه شهد وثلج ، % نفعا 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms107# قلبا كليما % % 17(@)(@@) % ثم أبدت ، إذ سلبت ال % % مرط ، مبيضا هضيما % % 18(@)(@@) % فلهونا الليل حتى % % هجم الصبح هجوما % % 19(@)(@@) % قلن : قد نادى المنادي ، % وبدا الصبح ، فقوما ! % 20(@)(@@) % قمن يزجين غزالا % فاتر الطرف ، رخيما % % PageV01P485 21(@)(@@) % ولقد قضيت حاجا % % تي ، ولاقيت النعيما % % PageV01P486 البحر : خفيف تام 1(@)(@@) % أيها العاذل الذي لج في الهج % % ر ، علام الذي فعلت ، ومما ؟ % 2(@)(@@) % فيم هجري ، وفيم تجمع ظلمي % % وصدودا ، ولم عتبت وعما ؟ % 3(@)(@@) % أدلالا ، لتتزيد محبا ، % أم بعادا ، فتسعر القلب هما ؟ % 4(@)(@@) % أيما أن تكون ، كان هوى من % منك ، فزاد الإله فيه ، وتما % % 5(@)(@@) % أم عدو يمشي بزور وإفك ، % كاشح دب بالنميمة لما % % 6(@)(@@) % يلف عهدا نقضته بعد وأي ، % وأساء الذي وشى وأذما % % 7(@)(@@) % زعموا أنني لغيرك سلم ، % شل شانيك ، لا احاشي ، وصما ! % 8(@)(@@) % فاتق الله في المغيب ، فإني % % حافظ للمغيب ، ذلك معما % % 9(@)(@@) % ليس يفتات ذو المودة عندي % % ويرى الكاشحون أنفا أشما % % 10(@)(@@) % قد رضينا ، وإن قضيت بجور ، % فاقبلي قول كاشح ، أثل ، أما % % PageV01P487 البحر : هزج 1(@)(@@) % أرقت ، وآبني همي ، % لنأي الدار من نعم % 2(@)(@@) % فأقصر عاذل عني ، % ومل ممرضي سقمي % % 3(@)(@@) % أموت لهجرها حزنا ، % ويحلو عندها صرمي % % 4(@)(@@) % فبئس ثواب ذات الود % د ، تجزيه ابنة العم % 5(@)(@@) % ويوم الشري قد هاجت % دموعا وكف السجم % 6(@)(@@) % غداة جلت على عجل % شتيتا بارد الظلم % 7(@)(@@) % وقالت لفتاة ، هند % % ها ، حوراء كالرثم : % 8(@)(@@) % أهو ، يا أخت ، بالله ، ال % % ذي لم يكن عن إسمي % % 9(@)(@@) % ولم يجازنا ب لود ، % أحفى بي ، ولم يكم % % 10(@)(@@) % فقالت رجع ما قالت : % نعم يخفيه عن علم % % PageV01P488 11(@)(@@) % فجئت فقلت : صب زل % من واش ، أخي إثم % % 12(@)(@@) % وقد أذنبت ذنبا ف ص % فحي ، ب لله ، عن ظلمي % % 13(@)(@@) % فقالت : لا ، فقلت : فلم % أرقت دمي بلا جرم ؟ % 14(@)(@@) % أإن أقررت بالذنب ، % لحب قد برى جسمي % % 15(@)(@@) % زويت العرف ، والنائ % ل عمدا ، غير ذي رحم % PageV01P489 البحر : مجزوء الخفيف 1(@)(@@) % قلت بالخيف مرة ، % لجوار نواعم : % 2(@)(@@) % قلن ، ب لله ، للتي % % سمعت قول ظالم % 3(@)(@@) % إقبلي العذر من فتى ، % صادق ، غير آثم % 4(@)(@@) % لم يخنك الوداد ، لا ، % لا ورب المواسم % % 5(@)(@@) % لم تبوئين باثمه ، % تائبا غير واغم ؟ % 6(@)(@@) % إتقي الله في فتى % ماجد ، أخت هاشم % % PageV01P490 البحر : كامل تام 1(@)(@@) % أخطأت ، أنت بدأت ب لصرم ، أخطأت ، أنت 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms108# بدأت ب لصرم ، % و بتعت منا الهجر ب لسلم % 2(@)(@@) % وزعمت أني قد ظلمتكم ، % كلا ، وأنت بدأت بالظلم % 3(@)(@@) % وسمعت بي قول الوشاة بلا % % ذنب أتيت به ، ولا جرم % 4(@)(@@) % إلا صبابة عاشق لكم ، % أورثته سقما على سقم % 5(@)(@@) % قد كنت أحسبني جليدا عنكم % فإذا فؤادي غير ذي عزم % % 6(@)(@@) % ما كنت أحسب أن حبا قاتلي % % حتى بليت بما برى جسمي % % 7(@)(@@) % أورثتني داء أخامره ، % أسماء ، بز اللحم عن عظمي % % 8(@)(@@) % لو كنت أنت قسمت ذاك له ، % مني عليه ، لجرت في القسم % % 9(@)(@@) % لكن ربي كان قدره ، % فقضاء ربي أفضل الحكم % PageV01P491 البحر : وافر تام 1(@)(@@) % إذا الحب المبرح باد يوما ، ألا تجزي ، عثيمة ، ود صب % بذكرك لا ينام ، ولا ينيم % 2(@)(@@) % لصب ، زاده حبا ووجدا ، % بكم ، سعدى ، ملامة من يلوم % % 3(@)(@@) % كريم ، لم تغيره الليالي ، % فتذهله ، ولا عهد قديم % % 4(@)(@@) % تودع من نساء الحي طرا ، % فأمسى خالصا بكم يهيم % 5(@)(@@) % وأمسى مدنفا قد مات وجدا ، % بسعداه ، وأبلته الهموم % 6(@)(@@) % أمين ما يخون له صدقا ، % إذا ولى ، له خلق كريم % 7(@)(@@) % وإني حين يفشى سر هاذ ، % لسري حافظ ، أبدا ، كتوم % % 8(@)(@@) % كلفت بها خدلجة خريدا ، % منعمة ، لها دل رخيم % 9(@)(@@) % إذا حتفلت عثيمة ، قلت : شمس ، % وإن عطلت عثيمة قلت ريم % 10(@)(@@) % لها وجه يضيء كضوء بدر % عتيق اللون ، باشره النعيم % PageV01P492 11(@)(@@) % إذا الحب المبرح باد يوما ، % فحبك عندنا ، أبدا ، مقيم % % 12(@)(@@) % أصوم ، إذا تصوم عثيم نفسي ، % وأفطر حين تفطر لا أصوم % % 13(@)(@@) % قليل رضاك يحمد عند نفسي ، % وسخطك عندنا حدث عظيم % PageV01P493 البحر : رمل تام 1(@)(@@) % قد أصاب القلب من نعم % سقم داء ، ليس ك لسقم % % 2(@)(@@) % إن نعما اقصدت رجلا ، % آمنا بالخيف ، إذ ترمي % % 3(@)(@@) % بشتيت نبته ، رتل ، % طيب الأنياب ، والطعم % 4(@)(@@) % وبوحف مائل ، رجل ، % كعناقيد من الكرم % 5(@)(@@) % عرضت يوما لجارتها ، % وهي لا تبوح لي ب سم : % 6(@)(@@) % إسأليه ، ثمت ستمعي % % أينا أحق بالظلم ؟ % 7(@)(@@) % وافهمي عنا تجاوزنا ، % واحكمي ، رضيت بالحكم % % 8(@)(@@) % وانشديه ، هل اتيت له % % سخطا مني ، على علم % 9(@)(@@) % يأتكم منه بحجته ، % فله العتبى ، ولا أحمي % % PageV01P494 البحر : كامل تام 1(@)(@@) % أوقفت من طلل على رسم ، % بلوى العقيق يلوح كالوشم % 2(@)(@@) % أقوى وأقفر ، بعد ساكنه ، % غير النعام ، يرود ، والأدم % 3(@)(@@) % فوقفت من 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms109# طرب اسائله ، % و لدمع مني بين السجم % 4(@)(@@) % وذكرت نعما ، إذ وقفت به ، % وبكيت من طرب إلى نعم % % 5(@)(@@) % يا نعم ، آتيه أسائله ، % فيزيدني سقما على سقم % % 6(@)(@@) % ما بال سهمك ليس يخطئني % % ويطيش عنك ، حزيمة ، سهمي ؟ % 7(@)(@@) % ا نعم ، ما لاقيت بعدكم % لمجالس اللذات من طعم % 8(@)(@@) % اما النهار ، فأنت ما شجني ، % والليل أنت طوائف الحلم % % 9(@)(@@) % لا تظهري سري ، فإن حديثكم % % في محصن أنأى من النجم % 10(@)(@@) % إني رأيت الحب ينقصه % % طول الزمان ، وحبكم ينمي % % PageV01P495 11(@)(@@) % سأرب وصلك ، إن مننت به ، % في المخ ، يا سكنى ، وفي العظم % PageV01P496 البحر : هزج 1(@)(@@) % أبيني ، اليوم ، يا نعم % أوصل منك ، أم صرم % 2(@)(@@) % فإن يك صرم عاتبة ، % فقد نفنى وهو سلم % % 3(@)(@@) % تلومك في الهوى نعم ، % وليس لها به علم % 4(@)(@@) % صحيح لو رأى نعما % خامر جسمه سقم % % 5(@)(@@) % جلت نعم على عجل ، % ببطن منى ، وهم حرم % 6(@)(@@) % أسيلا ليس فيه لنا % % ظر عيب ولا كلم % PageV01P497 البحر : متقارب تام 1(@)(@@) % % ه ، لا يجدون لشيء ألم % 2(@)(@@) % من آل المغيرة ، لا يشه % % ن ، عند المجازر ، لحم الوضم % PageV01P498 البحر : سريع 1(@)(@@) % من عاشق صب يسر الهوى ، % قد شفه الوجد إلى كلثم % 2(@)(@@) % رأتك عيني ، فدعاني الهوى % % إليك للحين ، ولم أعلم % 3(@)(@@) % قتلتنا ، يا حبذا أنتم ، % في غير ما جرم ، ولا مأثم % % 4(@)(@@) % والله قد انزل في وحيهه % مبينا في آيه المحكم : % 5(@)(@@) % من يقتل النفس كذا ظالما ، % ولم يقدها نفسه يظلم % % 6(@)(@@) % وأنت ثأري ، فتلافي دمي ، % ثم جعليه نعمة ، تنعمي % % 7(@)(@@) % وحكمي عدلا يكن بيننا ، % أو أنت فيما بيننا فاحكمي % % 8(@)(@@) % وجالسيني مجلسا واحدا ، % من غير ما عار ولا محرم % 9(@)(@@) % وخبريني ما لذي عندكم ، % ب لله ، في قتل مرىء مسلم ؟ % PageV01P499 البحر : مديد تام 1(@)(@@) % رث حبل الوصل ، و نصرما ، % من حبيب هاج لي سقما % % 2(@)(@@) % كدت أقضي ، إذ رأيت له % منزلا ب لخيف قد طسما % % 3(@)(@@) % لا ترى إلا الرماد به ، % ومغاني القدر ، والحمما % % 4(@)(@@) % ومخط النؤي ، مر به % % مدفع للسيل ، ف نهدما % % PageV01P500 البحر : كامل تام 1(@)(@@) % ما بال قلبك لا يزال يهيجه % % ذكر ، عواقب غيهن سقام % 2(@)(@@) % ذكر التي طرقتك بين ركائب ، % تمشي بمزهرها ، وأنت حرام % 3(@)(@@) % أتريد قتلك ، أم جزاء مودة ؟ % إن الرفيق 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms110# له عليك ذمام % % 4(@)(@@) % قد ساقني قدر وحين غالب % منها ، وصرف منية ، وحمام % 5(@)(@@) % قد كنت أغنى في السفاهة والصبا ، % عجبا لما تأتي به الأيام ! % 6(@)(@@) % والآن أعذرها ، وأعلم إنما % % سبل الضلالة والهدى أقسام % % 7(@)(@@) % إن تعد داركم ، أزرك ، وإن أمت ، % فعليك مني رحمة وسلام ! % PageV01P501 البحر : رجز تام 1(@)(@@) % يا ذا الذي في الحب يلحى ، أما % % تخشى عقاب لله فينا ، أما % % 2(@)(@@) % تعلم أن الحب داء ، أما % % و لله ، لو حملت منه كما % % 3(@)(@@) % حملت ، من حب رخيم ، لما % % لمت على الحب فدعني وما % % 4(@)(@@) % أطلب ، إني لست أدري بما % % قتلت إلا أنني بينما % % 5(@)(@@) % أنا بباب القصر ، في بعض ما % % أطلب في قصرهم ، إذ رمى % % 6(@)(@@) % شبه غزال بسهام فما % % أخطأ سهماه ، ولكنما % % 7(@)(@@) % عيناه سهمان له ، كلما % % أراد قتلي بهما ، سلما % % PageV01P502 البحر : مجزوء الخفيف 1(@)(@@) % صاح ، قد لمت ظالما ، % ف نظر إن كنت لائما % % 2(@)(@@) % هل ترى مثل ظبية % قلدوها التمائما ؟ % PageV01P503 البحر : خفيف تام 1(@)(@@) % إن طيف الخيال حين ألما % % هاج لي ذكرة وأحدث هما % % 2(@)(@@) % جددي الوصل يا سكين ، وجودي % % لمحب فراقه قد أحما % % 3(@)(@@) % إن تنيلي ، أعش بخير ، وإن لم % % تبذلي الود ، مت بالهم غما % % 4(@)(@@) % ليس دون الحياة والموت إلا % % أحسن اليوم صورة ، وأتما ؟ % 5(@)(@@) % ولقد قلت ، مخفيا ، لغريض % هل ترى ذلك الغزال الأجما ؟ % PageV01P504 البحر : خفيف تام 1(@)(@@) % ثم نبهتها ، فمدت كعابا % طفلة ، ما تبين رجع الكلام % 2(@)(@@) % ساعة ، ثم إنها لي قالت : % ويلتا قد عجلت يا ابن الكرام ! % PageV01P505 البحر : خفيف تام 1(@)(@@) % من رسولي إلى الثريا ، فإني % % ضافني الهم ، و عترتني الغموم % 2(@)(@@) % يعلم الله أنني مستهام % بهواكم ، وأنني مرحوم % PageV01P506 البحر : كامل تام 1(@)(@@) % حسروا الوجوه بأذرع ومعاصم ، % ورنوا بنجل للقلوب كوالم % 2(@)(@@) % حسروا الأكمة عن سواعد فضة ، % فكأنما انتصبت متون صوارم % % PageV01P507 البحر : كامل تام 1(@)(@@) % يا راكبا نحو المدينة جسرة يا راكبا نحو المدينة جسرة % أجدا ، تلاعب حلقة وزماما % % 2(@)(@@) % إقرأ على أهل البقيع ، من امرىء % كمد ، على أهل البقيع ، سلاما ! % 3(@)(@@) % كم غيبوا فيه كريما ماجدا % شهما ، ومقتبل الشباب غلاما % % 4(@)(@@) % ونفيسة في أهلها ، مرجوة ، % جمعت صاحبة صورة وتماما % % PageV01P508 البحر : مجزوء الخفيف 1(@)(@@) % نام صحبي ، ولم انم ، % من خيال بنا ألم 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms111# % 2(@)(@@) % طاف بالركب موهنا ، % بين خاخ إلى إضم % 3(@)(@@) % ثم نبهت صاحبا % طيب الخيم والشيم % 4(@)(@@) % أريحيا ، مساعدا ، % غير نكس ، ولا برم % 5(@)(@@) % قلت : يا عمرو شفني % % لاعج الحب والألم % 6(@)(@@) % إئت هندا ، فقل لها : % ليلة الخيف ذي سلم % PageV01P509 البحر : طويل 1(@)(@@) % أشارت إلينا بالبنان تحية ، % فرد عليها مثل ذاك بنان % 2(@)(@@) % فقالت ، واهل الخيف قد حان منهم % خفوف ، وما يبدي المقال لسان % 3(@)(@@) % نوى غربة ، قد كنت أيقنت أنها ، % وجدك ، فيها عن نواك شطان % % 4(@)(@@) % تعال ، فزرنا زورة قبل بيننا ، % فقد غاب عنا من نخاف جبان % 5(@)(@@) % فقلت لها : خير اللقاء ببلدة % من الأرض ، لا يخشى بها الحدثان % % PageV01P510 البحر : طويل 1(@)(@@) % طربت وهاجتك المنازل من جفن ، % ألا ربما يعتادك الشوق بالحزن % 2(@)(@@) % مررت على أطلال زينب بعدها ، % فأعولتها ، لو كان إعوالها يغني % % 3(@)(@@) % وقد أرسلت ، في السر ، أن قد فضحتني ، % وقد بحت ب سمي في النسيب ، ولم تكن % 4(@)(@@) % فسرفني أهلي وجل عشيرتي ، % فإن كان يهنيك الذي جئت ، فليهن % % 5(@)(@@) % أضعت الذي قد كان في السر بيننا ، % وسرك عندي كان في أحصن الحصن % PageV01P511 البحر : طويل 1(@)(@@) % لقد عرضت لي بالمحصب من منى ، % مع الحج ، شمس سترت بيمان % 2(@)(@@) % بدا لي منها معصم يوم جمرت % وكف خضيب زينت ببنان % 3(@)(@@) % فلما لتقينا ب لثنية سلمت % ونازعني البغل اللعين عناني % % 4(@)(@@) % فوالله ما ادري ، وإني لحاسب ، % بسبع رميت الجمر أم بثمان % % 5(@)(@@) % فقلت لها : عوجي ، فقد كان منزلي % % خصيب ، لكم ناء عن الحدثان % % 6(@)(@@) % فعجنا ، فعاجت ساعة ، فتكلمت % فظلت لها العينان تبتدران % PageV01P512 البحر : كامل تام 1(@)(@@) % يا رب ، إنك قد علمت بأنها % % أهوى عبادك كلهم إنسانا % % 2(@)(@@) % وألذهم نعم إلينا واحدا ، % واحب من نأتي ، ومن حيانا % % 3(@)(@@) % فآجز المحب تحية ، و جز الذي % % يبغي قطيعة حبه هجرانا % % 4(@)(@@) % آمين يا ذا العرش فاسمع واستجب % لما نقول ، ولا تخيب دعانا % % 5(@)(@@) % حملت من حبيك ثقلا فادحا ، % والحب يحدث للفتى أحزانا % % 6(@)(@@) % لو تبذلين لنا دلالك لم نرد % غير الدلال ، وكان ذاك كفانا % % 7(@)(@@) % وأطعت في عواذلا حملنكم ، % وعصيت فيك الأهل والإخوانا % % 8(@)(@@) % أنبئت أنك ، إذا أتاك كتابنا ، % وأشعت عند قراته عصيانا % % 9(@)(@@) % ونبذته كالعود ، حين رأيته ، % فاشتد ذاك علي منك ، وسانا % % 10(@)(@@) % وأخذته 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms112# بعد الصدود تكرها ، % وأشعث عند قراته عصيانا % % PageV01P513 11(@)(@@) % قالت : لقد كذب الرسول فقدته ! % أبقول زور يرتجي إحسانا ؟ % 12(@)(@@) % كذب الرسول فسل معادة ، هكذا % % كان الحديث ، ولا تكن عجلانا % % 13(@)(@@) % بل جاءني ، فقرأته متهللا % وجهي وبعد تهلل أبكانا % % 14(@)(@@) % قد قلت ، حيت رأيته : لو أنه % % يا بشر منه سوى نصيرة جانا % % 15(@)(@@) % أرسلت أكذب من مشى وأنمه ، % من ليس يكتم سرنا أعدانا % % 16(@)(@@) % ما إن ظلمت بما فعلت ، وإنما % % يجزي العطية من أراب وخانا % % 17(@)(@@) % وصرمت حبلك إذ صرمت لأنني % % اخبرت أنك قد هويت سوانا % % 18(@)(@@) % هذا ، وذنب قبل ذاك جنيته % سل الفؤاد ، ومثله سلانا % % 19(@)(@@) % صرحت فيه ، وما كتمت مجاهرا % بالقول أنك لا تريد لقانا % % 20(@)(@@) % قلت : اسمعي لا تعجلي بقطيعة ، % بالله ، احلف صادقا أيمانا % % PageV01P514 21(@)(@@) % إن لمبلغك الحديث لكاذب % يسعى ليقطع بيننا الأقرانا % % 22(@)(@@) % لا تجمعي صرمي وهجري باطلا ، % وتفهمي ، واستيقني استيقانا % % 23(@)(@@) % إني لمن واددته ووصلته % ألفيت لا مذقا ، ولا منانا % % 24(@)(@@) % أصل الصديق ، إذا أراد وصالنا ، % وأصد مثل صدوده أحيانا % % 25(@)(@@) % إن صد عني كنت أكرم معرض ، % ووجدت عنه مرحلا ومكانا % % 26(@)(@@) % لا مفشيا ، عند القطيعة ، سره % بل حافظ من ذاك ما استرعانا % % PageV01P515 البحر : كامل تام 1(@)(@@) % ألمم بجور في الصفاح حسان ، % هيجن منك روائع الأحزان % 2(@)(@@) % بيض أوانس قد أصبن مقاتلي ، % يشبهن تلع شوادن الغزلان % % 3(@)(@@) % واذكر لهن جوى بنفسك داخلا ، % قد هاض عظمي حره ، وبراني % % 4(@)(@@) % فكأن قلبك يوم جئت مودعا % بدلالهن ، وربما أضناني % % 5(@)(@@) % وكلفت منهن الغداة بغادة % مجدولة ، جدلت كجدل عنان % 6(@)(@@) % ثقلت عجيزتها فراث قيامها ، % ومشت كمشي الشارب النشوان % 7(@)(@@) % نظرت إليك بمقلتي يعفورة % نظر الربيب الشادن الوسنان % % 8(@)(@@) % ولها محل طيب تقرو به % % بقل التلاع بحافتي عمان % 9(@)(@@) % يا قلب ما لك لا تزال موكلا ، % تهذي بهند عند حين أوان % 10(@)(@@) % ما غن أشدت بذكرها ، لكنه % غلب العزاء ، وبحت ب لكتمان % PageV01P516 11(@)(@@) % لو كنت ، إذ أدنفت من كلف بها % % يوما ، أصبت حديثها ، لشفاني % % 12(@)(@@) % وكأن كافورا ومسكا خالصا % عبقا بها بالجيب والأردان % % 13(@)(@@) % وجلت بشيرة سنة مشهورة % دون الأراك ، وراهن الحوذان % % 14(@)(@@) % شبهتها ، من حسنها ، شمس الضحى % % وهي القتول ، ودمية الرهبان % % PageV01P517 البحر : كامل تام 1(@)(@@) % ذكر البلاط ، وكل ساكن قرية % بعد الهدوء 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms113# تهيجه أوطانه % 2(@)(@@) % ثم لتقينا ب لمحصب غدوة ، ، % والقلب يخلجه لها أشطانه % % 3(@)(@@) % قالت لأتراب لها شبه الدمى % % قد غاب عن عمر الغداة بيانه % % 4(@)(@@) % ما لي أراه لا يسدد حجة % حتى يسددها له أعوانه % 5(@)(@@) % مثل الذي أبصرت يوم لقيتها % % عي الخطيب به ، وكل لسانه % % 6(@)(@@) % أسعرت نفسك حب هند فالهوى % % حتى تلبس فوقه أكفانه % % 7(@)(@@) % هند ، وهند لا تزال بخيلة ، % والقلب يسعره لها أشجانه % % PageV01P518 البحر : خفيف تام 1(@)(@@) % صاح ، غن الملام ، في حب جمل ، % كاد يقصي الغداة منك مكاني % % 2(@)(@@) % ف نظر اليوم بعض من كنت تهوى % % ف نج من شأنه ، ودعني وشاني % % 3(@)(@@) % فبحسبي أني بذكرة هند % هائم العقل ، دائم الأحزان % 4(@)(@@) % وإذا جئتها ، لأشكو إليها % % بعض ما شفني ، وما قد شجاني % % 5(@)(@@) % هبتها ، وازدهي من الحب عقلي ، % وعصاني بذات نفسي لساني % % 6(@)(@@) % ونسيت الذي جمعت من القول % لديها ، وغاب عني بياني % % PageV01P519 البحر : هزج 1(@)(@@) % ألا حي التي قامت % على خوف ، تحيينا % % 2(@)(@@) % ففاضت عبرة منها ، % فكاد الدمع يبكينا % % 3(@)(@@) % لئن شطت بها دار % عنوج ب لهوى حينا % % 4(@)(@@) % لقد كنا نؤاتيها ، % وقد كانت تؤاتينا % % 5(@)(@@) % فلا قرب لها يشفي % % وليس البعد يسلينا % % 6(@)(@@) % وقد قالت لتربيها ، % ورجع القول يعنينا % % 7(@)(@@) % ألا يا ليت ما شعري % % وما قد كان يمنينا % % 8(@)(@@) % أموف بالذي قال ، % وما قد كان يعطينا ؟ % 9(@)(@@) % فقالت تربها ظني % % به ان سوف يجزينا % % 10(@)(@@) % ويعصي قول من ينهى % % ومن يعذله فينا % % PageV01P520 11(@)(@@) % كما نعصي إليه ، عن % % د جد القول ، ناهينا % % PageV01P521 البحر : خفيف تام 1(@)(@@) % ثم ما نمت بعدكم من منام ، من لقلب أمسى حزينا معنى % % مستكينا ، قد شفه ما اجنا % % 2(@)(@@) % إثر شخص ، نفسي فدت ذاك شخصا ، % نازح الدار بالمدينة عنا % % 3(@)(@@) % أن أراه ، والله يعلم ، يوما ، % منتهى رغبتي ، وما أتمنى % % 4(@)(@@) % ليت حظي كطرفة العين منها ، % وكثير منها القليل المهنا % % 5(@)(@@) % أو حديث على خلاء يسلي % % ما اجن الضمير منها ومنا % % 6(@)(@@) % أنرى نعمة ، نراها علينا % % منك يوما ، قبل الممات ، ومنا % % 7(@)(@@) % خبرينا بما كتبت إلينا ، % أهو الحق ، أم تهزأت منا ؟ % 8(@)(@@) % ما نرى راكبا يخبر عنكم ، % أو يريد الحجاز إلا حزنا % % 9(@)(@@) % ثم ما نمت بعدكم من منام ، % منذ فارقت أرضكم مطمئنا % % 10(@)(@@) % ثم ما 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms114# تذكرين للقلب ، إلا % % زيد شوقا إليكم ، و ستجنا % % PageV01P522 11(@)(@@) % ذاك أني ذكرت قيلك يوما % يا صفي الفؤاد لا تنسينا % % PageV01P523 البحر : رمل تام 1(@)(@@) % وغضيض الطرف مكسال الضحى % % أحورش المقلة ، كالريم الأغن % 2(@)(@@) % مر بي في نفر يحففنه % مثلما حف النصارى بالوثن % 3(@)(@@) % راعني منظره ، لما بدا ، % ربما أرتاع ب لشيء الحسن % 4(@)(@@) % قلت : من هذا ؟ فقالت : بعض من % فتن الله بكم ، فيمن فتن % % 5(@)(@@) % بعض من كان أسيرا زمنا ، % ثم أضحى لهواكم قد مجن % % 6(@)(@@) % قلت : حقا ذا ؟ فقالت قولة ، % أورثت في القلب هما وشجن % 7(@)(@@) % يشهد الله على حبي لكم ، % ودموعي شاهد لي ، وحزن % % 8(@)(@@) % قلت : يا سيدتي ، عذبتني ! % قالت : اللهم عذبني إذن % PageV01P524 البحر : وافر تام 1(@)(@@) % أجد غدا لبينهم القطين % وفاتتنا بهم دار شطون % % 2(@)(@@) % تبعتهم بطرف العين ، حتى % % أتى من دونهم خرق بطين % 3(@)(@@) % فظل الوجد يسعرني ، كأني % % أخو ربع يؤرق أو طعين % 4(@)(@@) % يقول مجالد لما رآني ، % يراجعني الكلام ، فما أبين % 5(@)(@@) % أحقا أن حيا سوف يقضي ، % وقد كثرت بصاحبي الظنون % % 6(@)(@@) % تقربني ، وليس تشك أني ، % عدا فيهن ، بي الداء الدفين % % 7(@)(@@) % إلى ان ذر قرن الشمس ، حتى % % تغيب لودنا منهم حيون % % 8(@)(@@) % أقول لصاحبي ضحى : أنخل % بدا لكما بعمرة أم سفين ؟ % 9(@)(@@) % أم الأظعان يرفعهن ربع % من الرقراق ، جال بها الحرون % 10(@)(@@) % على البغلات أمثال وحور ، % كمثل نواعم البقار ، عين % % PageV01P525 11(@)(@@) % نواعم لم يخالطهن بؤس % ولم يخلط بنعمتهن هون % % PageV01P526 البحر : رمل تام 1(@)(@@) % إن من تهوى مع الفجر ظعن % للهوى والقلب متباع الوطن % 2(@)(@@) % بانت الشمس ، وكانت كلما % % ذكرت للقلب ، عاودت ددن % 3(@)(@@) % نظرت عيني إليها نظرة ، % مهبط الحجاج من بطن يمن % 4(@)(@@) % موهنا ، تمشي بها بغلتها ، % في عثانين من الحج ، ثكن % 5(@)(@@) % فرآها القلب لا شكل لها ، % ربما يعجب ب لشيء الحسن % 6(@)(@@) % قلت : قد صدت فماذا عندكم % احسن الناس لقلب مرتهن % % 7(@)(@@) % ولئن أمست نواها غربة ، % لا تؤاتيني وليست من وطن % 8(@)(@@) % فلقدما قربتني نظرتي % % لعناء ، آخر الدهر ، معن % % 9(@)(@@) % ثم قالت : بل لمن أبغضكم % شقوة العيش ، وتكليف الحزن % % 10(@)(@@) % بل كريم ، علقته نفسه % بكريم ، لو يرى أو لو يدن % PageV01P527 11(@)(@@) % سوف آتي زائرا أرضكم ، % بيقين ، فاعلميه ، غير ظن % % 12(@)(@@) % فأجابت : هذه أمنية ، % ليت أنا 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms115# نشتريها بثمن % 13(@)(@@) % وهي ، إن شئت ، تسير نحونا ، % لو تريد الوصل ، أو تعقل عن % 14(@)(@@) % نصك العيس إلينا ، أربعا ، % تملك العين ، إذا العاني وهن % PageV01P528 البحر : بسيط تام 1(@)(@@) % قد هاج قلبك بعد السوة الوطن ، % و لشوق يحدثه للنازح الشجن % 2(@)(@@) % من كان يسأل عنا أين منزلنا ، % ف لأقحوانة منا منزل قمن % 3(@)(@@) % وما لدار عفت من بعد ساكنها % % وما لعيش بها ، إذ ذاكم ، ثمن % 4(@)(@@) % إذ الجمار حرى ممن يسر به ، % و لحج قدما به معروف الثكن % 5(@)(@@) % إذ نلبس العيش صفوا لا يكدره % % جفو الوشاة ، ولا ينبو بنا زمن % 6(@)(@@) % إذا جتمعنا هجرنا كل فاحشة % عند للقاء ، وذاكم مجلس حسن % 7(@)(@@) % فذاك دهر مضت عنا ضلالته % وكل دهر له في سيره سنن % 8(@)(@@) % ليت الهوى لم يقربني إليك ، ولم % % أعرفك ، إذ كان حظي منكم الحزن % % PageV01P529 البحر : مجزوء الكامل 1(@)(@@) % هاج الفؤاد ظعائن % بالجزع من أعلى الحجون % 2(@)(@@) % يحدى بهن ، وفي الظعائن % % ربرب حور العيون % % 3(@)(@@) % فيهن طاوية الحشا ، % جيداء ، واضحة الجبين % % 4(@)(@@) % بيضاء ، ناصعة البياض ، % ض ، كدرة الصدف الكنين % 5(@)(@@) % في المنصب العالي ، وبيت % ت المجد ، في حسب ودين % 6(@)(@@) % إن القتول تقتلت % ب لدل للقلب الرهين % % 7(@)(@@) % حب القتول أحلها % % في القلب منزلة المكين % % 8(@)(@@) % فإذا تجاوب مرة % ورق الحمام على الغصون % % 9(@)(@@) % ذكرنني ما قد نسي % % من الصبابة بعد حين % 10(@)(@@) % إن الحزين يهيجه ، % بعد الذهول بكا الحزين % PageV01P530 11(@)(@@) % ل لنا هوى أخرى المنون % ن وما يمر من السنين % 12(@)(@@) % حب القتول ولا تزا % % هوى لنا اخرى المنون % % PageV01P531 البحر : بسيط تام 1(@)(@@) % هيهات من أمة الوهاب منزلنا % % إذا حللنا بسيف البحر من عدن % 2(@)(@@) % وحل أهلك أجيادا ، فليس لنا % % إلا التذكر ، أو حظ من الحزن % 3(@)(@@) % لا داركم دارنا يا وهب إن نزحت % نواك عنا ، ولا أوطانكم وطني % % 4(@)(@@) % فلست أملك إلا أن أقول ، إذا % % ذكرت : لا يبعدنك الله يا سكني % % 5(@)(@@) % يا وهب إن يك قد شط البعاد بكم ، % وفرق الشمل منا صرف ذا الزمن % % 6(@)(@@) % فكم وكم من حديث قد خلوت به ، % في مسمع منكم ، أو منظر حسن % % 7(@)(@@) % وكم وكم من دلال قد شغفت به % % منكم ، متى يره ذو العقل ، يفتتن % % 8(@)(@@) % بل ما 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms116# نسيت ببطن الخيف موقفها ، % وموقفي ، وكلانا ثم ذو شجن % 9(@)(@@) % وقولها للثريا يوم ذي خشب ، % و لدمع منها على الخدين ذو سنن % 10(@)(@@) % ب لله قولي له ، في غير معتبة ، % ماذا أردت بطول المكث في اليمن % PageV01P532 11(@)(@@) % إن كنت حاولت دنيا أو نعمت بها % % فما أخذت بترك الحج من ثمن % % 12(@)(@@) % فلو شهدن ، غداة البين ، عبرتنا % % لأن تغرد قمري على فنن % 13(@)(@@) % لاستيقنت غير ما ظنت بصاحبها ، % وأيقنت أن لحجا ليس من وطني % % PageV01P533 البحر : رمل تام 1(@)(@@) % من رسوم باليات ودمن % عاد لي همي ، وعاودت ددن % 2(@)(@@) % يا أبا الحارث قلبي هائم % ف ئتمر أمر رشيد مؤتمن % 3(@)(@@) % نظرت عيني إليها نظرة ، % تركت قلبي لديها مرتهن % 4(@)(@@) % علق القلب غزالا شادنا % يا لقومي من غزال قد شدن % 5(@)(@@) % حسن الوجه ، نقيا لونه ، % طيب النشر ، لذيذ المحتضن % % 6(@)(@@) % أطلبن لي صاح وصلا عنده ، % إن خير الوصل ما ليس يمن % 7(@)(@@) % إن حبي آل ليلى قاتلي % % ظهر الحب بجسمي وبطن % 8(@)(@@) % ليس حب فوق ما أحببته ، % غير أن أقتل نفسي ، أو اجن % % 9(@)(@@) % جعلت للقلب مني حبها % % شجنا ، زاد على كل شجن % % 10(@)(@@) % فإذا ما شطحت ، هام بها ، % وإذا راعت إلى الدار سكن % PageV01P534 البحر : منسرح 1(@)(@@) % إعتادني ، بعد سلوة ، حزني % % طيف حبيب سرى فأرقني % % 2(@)(@@) % من ظبية ب لعقيق ساكنة % قد شفني حبها وعذبني % % 3(@)(@@) % وهي لنا ب لوصال طيبة الن % س ، وربي بها قد اغرمني % % 4(@)(@@) % شطت ديار الحبيب ، فاغتربت ، % هيهات شعب الحبيب من وطني % % 5(@)(@@) % علقتها شقوة ، وبان بها % % مني مليك ، فأصبحت شجني % % 6(@)(@@) % فليتها في الحياة تتبعني ، % وعند موتي يضمها كفني % % 7(@)(@@) % يا نظرة ما نظرت موجعة % لم أرها بعدها ، ولم ترني % % PageV01P535 البحر : بسيط تام 1(@)(@@) % بانت سليمى ، وقد كانت تؤاتيني ، % إن الاحاديث تأتيها وتاتيني % % 2(@)(@@) % فقلت ، لما لتقينا ، وهي معرضة % عني ، ليهنك من تدنينه دوني % % 3(@)(@@) % منيتنا فرجا ، إن كنت صادقة ، % يا بنت مروة ، حقا ما تمنيني ؟ % 4(@)(@@) % ماذا عليك ، وقد أجديته سقما ، % من حضرة الموت نفسي أن تعوديني % % 5(@)(@@) % وتجعلي نطفة في القعب باردة ، % فتغمسي فاك فيها ، ثم تسقيني % % 6(@)(@@) % فهي شفائي ، إذا ما كنت ذا سقم ، % وهي دوائي ، إذا ما الداء يضنيني % % PageV01P536 البحر : خفيف 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms117# تام 1(@)(@@) % يا خليلي ، من ملام دعاني ، ، % وألما الغداة بالأظعان % 2(@)(@@) % لا تلوما في اهل زينب ، إن ال % % قلب رهن بآل زينب ، عان % 3(@)(@@) % وهي أهل الصفاء والود مني ، % وإليها الهوى فلا تعذلاني % % 4(@)(@@) % لم تدع للنساء عندي نصيبا ، % غير ما قلت مازحا بلساني % % 5(@)(@@) % ولعمري لحين عمرو إليها % % يوم ذي الشري قادني ودعاني % % 6(@)(@@) % ما أرى ، ما حييت ، أن أذكر % الموقف منها بالخيف ، إلا شجاني % % 7(@)(@@) % ثم قالت لتربها ، ولأخرى ، % من قطين مولد : حدثاني % % 9(@)(@@) % قالتا : نبتغي إليه رسولا ، % ونميت الحديث بالكتمان % % 10(@)(@@) % إن قلبي بعد الذي نال منها ، % كالمعنى عن سائر النسوان % PageV01P537 البحر : خفيف تام 1(@)(@@) % إنني اليوم عادني أحزاني ، % وتذكرت ميعتي في زماني % % 2(@)(@@) % وتذكرت ظبية أم رئم ، % صدع القلب ذكرها ، فشجاني % % 3(@)(@@) % لا تلمني عتيق ، حسبي الذي بي ، % إن بي ، يا عتيق ، ما قد كفاني % % 4(@)(@@) % إن دهرا يلف شملي بسعدى % % لزمان يهم ب لإحسان % 5(@)(@@) % لا تلمني ، وأنت زينتها لي ، % أنت مثل الشيطان للإنسان % % 6(@)(@@) % إن بي داخلا من الحب قد % % لى عظامي مكنونه ، وبراني % % 7(@)(@@) % لو بعينيك ، يا عتيق ، نظرنا % % ليلة السفح قرت العينان % 8(@)(@@) % إذا بدا الكشح ، والوشاح من % % الدر ، وفصل فيه من المرجان % % 9(@)(@@) % وقلى قلبي النساء سواها ، % بعدما كان مغرما بالغواني % % 10(@)(@@) % وأرجي أن يجمع الدهر شملا % بك ، سقيا لذلكم من زمان ! % PageV01P538 11(@)(@@) % ليتني أشتري ، لنفسي منها ، % مثل ودي ، بساعدس وبناني % % 12(@)(@@) % خلجت عيني اليمين بخير ، % تلك عين مأمونة الخلجان % PageV01P539 البحر : خفيف تام 1(@)(@@) % ضحكت أم نوفل ، إذ رأتني % % وزهيرا ، وسالف بن سنان % 2(@)(@@) % عجبت إذ رأت لداتي شابوا ، % وقتيرا من المشيب علاني % % 3(@)(@@) % إن تريني أقصرت عن طلب الغي ، % وطاوعت عاذلي ، إذ نهاني % % 4(@)(@@) % وتركت الصبا ، وأدركني الحلم ، % م ، وحرمت بعض ما قد كفاني % % 5(@)(@@) % ودعاني إلى الرشاد فؤاد % كان للغي ، مرة ، قد دعاني % % 6(@)(@@) % فجوار مستقتلات إلى لله % و حسان كناضر الأغصان % 7(@)(@@) % قتل للرجال يرشقن ب لطر % ف ، حسان كخذل الغزلان % % 8(@)(@@) % بدن ، في خدالة وبهاء ، % طيبات الأعطاف والأردان % 9(@)(@@) % قد دعاني ، وقد دعاهن لله % و شجون ، من أعجب الأشجان % 10(@)(@@) % ف هتصرنا من الحديث ثمارا ، % حيث لا يجتني ، لعمرك ، جاني % % PageV01P540 11(@)(@@) % ذاك طورا ، وتارة أبعث القي % نة ، وهنا ، بالمزهر 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms118# الحنان % 12(@)(@@) % وأنص المطي ب لركب ، يطلب % لبن سراعا بواكر الأظعان % % 13(@)(@@) % فنصيد الغرير من بقر الوح % % ش ، ونلهو بلذة الفتيان % 14(@)(@@) % في زمان لو كنت فيه ضجيعي ، % غير شك ، عرفت لي عصياني % % 15(@)(@@) % وتقلبت في الفراش ، ولا تع % رف إلا الظنون أين مكاني % % PageV01P541 البحر : كامل تام 1(@)(@@) % أضحى فؤادك غير ذات أوان % بل لم يرعك تحمل الجيران % 2(@)(@@) % بانوا وصدع بينهم شعب النوى ، % عجبا كذاك تقلب الأزمان % 3(@)(@@) % أخطى الربيع بلادهم ، فتيمنوا ، % ولحبهم أحببت كل يمان % 4(@)(@@) % لله يرجعهم ، وكل مجلجل % واهي العزالي ، معلم الأوطان % 5(@)(@@) % ولقد أبيت ضجيع كل مخضب % رخص الأنامل طيب الأردان % 6(@)(@@) % عبق الثياب من العبير ، مبتل ، % يمشي يميد كمشية النشوان % % 7(@)(@@) % دعص من الأنقاء إن هي ادبرت ، % أو أقبلت ، فكصعدة المران % 8(@)(@@) % يجري عليها كلما غتسلت به % فضل الحميم يجول كالمرجان % 9(@)(@@) % سقيا لدارهم التي كانوا بها % % إذ لا يزال رسولهم يلقاني ! % 10(@)(@@) % ولقد خشيت بأن ألج بهجركم ، % إن الحبيب مذهل الإنسان % % PageV01P542 11(@)(@@) % بل جن قلبك أن بدت لك دارها % % جزعا ، وكدت تبوح بالكتمان % PageV01P543 البحر : خفيف تام 1(@)(@@) % ولقد أشهد المحدث عند ل % د القصر ، فيه تعفف وبيان % 2(@)(@@) % في زمان من المعيشة لذ ، % قد مضى عصره ، وهذا زمان % 3(@)(@@) % نجعل الليل موعدا حين نمسي ، % ثم يخفي حديثنا الكتمان % 4(@)(@@) % أيها الكاشح المعرض ب لصر % م ، تزحزح فما لها الهجران % 5(@)(@@) % لا مطاع في آل زينب فارجع ، % أو تكلم ، حتى يمل اللسان % 6(@)(@@) % لا صديقا كنت اتخذت ، ولا نص % % حك عندي زجر له ميزان % 7(@)(@@) % ف نطلق صاغرا فليس لها الصر % م لدينا ، ولا إليها الهوان % 8(@)(@@) % كيف صبري عن بعض نفسي ، وهل يص % بر عن بعض نفسه الإنسان ؟ % PageV01P544 البحر : خفيف تام 1(@)(@@) % سحرتني الزرقاء من مارون ، % إنما السحر عند زرق العيون % 2(@)(@@) % سحرتني بجيدها ، وشتيت ، % وبوجه ذي بهجة مسنون % % 3(@)(@@) % كأقاح برملة ضربته % % ريح جو بديمة ودجون % % 4(@)(@@) % تردع القلب ذا العزاء ، ويسلي % % برد أنيابها ردوع الحزين % % 5(@)(@@) % وجبين وحاجب لم يصبه % نتف خط ، كأنه خط نون % 6(@)(@@) % فرمتني ، فأقصدتني بسهم ، % شك مني الفؤاد بعد الوتين % 7(@)(@@) % ورمتها يداي مني بنبل % كيف أصطاد عاقلا في حصون ؟ % 8(@)(@@) % تنتحيني فلا ترى ، وترى النا % % س بصعب 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms119# ممنع مأمون % % 9(@)(@@) % ذي محاريب أحرزت أن تراها % % كل بيضاء سهلة العرنين % PageV01P545 البحر : منسرح 1(@)(@@) % إني ، ومن احرم الحجيج له ، % وموقف الهدي ، بعد ، والبدن % 2(@)(@@) % والبيت ذي الأبطح العتيق ، وما % % جلل من حر عصب ذي اليمن % 3(@)(@@) % والأشعث الطائف المهل ، وما % % بين الصفا والمقام والركن % % 4(@)(@@) % وزمزم و لجمار إذ رميت ، % والجمرتين اللتين بالبطن % % 5(@)(@@) % وما أقر الظباء ب لبيت ، و ل % ق ، إذا ما دعت على فنن % % 6(@)(@@) % ما خنت عهد القتول إذ شطحت ، % ولو أتوها به لتصرمني % % 7(@)(@@) % وموقف الهدي بعد ، والبدن % منكم ، ولم آتها ، ولم أخن % % 8(@)(@@) % لا يكن البخل لي وجودكم ، % يوما لغيري ، وأنتم شجني % % 9(@)(@@) % ما كانت الدار ب لتلاع ولا الأ % جراع ، لولا القتول ، من وطني % % 10(@)(@@) % يا قوم حب القتول أجرضني % % وتاركي هائما بلا دمن % % PageV01P546 11(@)(@@) % قد خط في الزبر ، فاطلبوا بدمي ، % من لم يقدني يوما ، ولم يدني % % 12(@)(@@) % علقتها ناشئا ، وعلقت رجلا % غيري غض الشباب ك لغصن % 13(@)(@@) % وعلقتني أخرى وعلقها % % ناش يصيد القلوب ك لشطن % 14(@)(@@) % ف لشكل منها الغداة مختلف % ذا طلاب الضلال والفتن % 15(@)(@@) % قد قلت ، لما سمعت أمرهم : % يا رب قد شفني وأحزنني % % 16(@)(@@) % إليك أشكو لذي أصبت به % % PageV01P547 البحر : خفيف تام 1(@)(@@) % أصبح القلب في الحبال رهينا ، % مقصدا يوم فارق الظاعنينا % % 2(@)(@@) % عجلت حمة الفراق علينا % % برحيل ، ولم نخف أن تبينا % % 3(@)(@@) % لم يرعني إلا الفتاة ، وإلا % دمعها في الرداء سحا سنينا % % 4(@)(@@) % ولقد قلت ، يوم مكة سرا ، % قبل وشك من بينكم : نولينا % % 5(@)(@@) % أنت أهوى العباد قربا وبعدا ، % لو تنيلين عاشقا محزونا % % 6(@)(@@) % قاده الطرف ، يوم سرنا ، إلى الحي % % ن جهارا ، ولم يخف أن يحينا % % 7(@)(@@) % فإذا نعجة تراعي نعاجا ، % ومها نجل المناظر ، عينا % % 9(@)(@@) % قلت : من أنتم ؟ فصدت ، وقالت : % أمبد سؤالك العالمينا ؟ % 10(@)(@@) % قلت : بالله ذي الجلالة لما % % ان تبلت الفؤاد أن تصدقينا % % 11(@)(@@) % أي من تجمع المواسم قولي ، % وأبيني لنا ، ولا تكتمينا % % PageV01P548 12(@)(@@) % نحن من ساكني العراق ، وكنا % % قبلها قاطنين مكة حينا % % 13(@)(@@) % قد صدقناك إذ سألت ، فمن أن % ت ؟ عسى أن يجر شأن شؤونا % % 14(@)(@@) % ونرى أننا عرفناك بالنع % % ت بظن ، وما قتلنا يقينا % % 15(@)(@@) % بسواد الثنيتين ، ونعت ، % قد نراه لناظر مستبينا % % PageV01P549 البحر : خفيف 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms120# تام 1(@)(@@) % أصبح القلب بالقتول حزينا ، % هائم اللب ، لو قضته الديونا % % 2(@)(@@) % قال : أبشر ، لما اتاها رسول ، % قد رأينا منها لك اليوم لينا % % 3(@)(@@) % إن تكن ب لصفاء ، يا صاح ، همت ، % فلقد عنت الفؤاد سنينا % % 4(@)(@@) % أرسلت أننا نخاف شنات ، % آفكات ، من حولنا ، وعيونا % % 5(@)(@@) % إجتنبنا في الأرض ، إن كنت تخشى ، % إن لقيناك مرة ، أن تخونا % % 6(@)(@@) % فلك لله و لأمانة و لمي % % ق ، أن لا نخونكم ما بقينا % % 7(@)(@@) % ثم أن لا يزال من كنت تهوي % ن حبيبا ، ما عشت عندي مكينا % % 8(@)(@@) % ثم لا تحرب الأمانة عندي ، % أغدر الناس من يخون الأمينا % % 9(@)(@@) % ثم أن نصرف المناسيب ، حتى % % نتركك الناس يرجمون الظنونا % % 10(@)(@@) % ثم أن أرفض النساء سواكم ، % ها رضيتم ؟ قالت : نعم قد رضينا % % PageV01P550 البحر : خفيف تام 1(@)(@@) % ارحمينا ، يا نعم ، مما لقينا % % وصلينا ، فانعمي ، أو دعينا % % 2(@)(@@) % عنك إن تسألي ، فدى لك نفسي ، % ثم تأتين غير ما تزعمينا % % 3(@)(@@) % إن خير النساء عندي وصالا ، % من تؤاتي بوصلها ما هوينا % % 4(@)(@@) % و ذكري العهد و لمواثيق منا ، % يوم آليت لا تطيعين فينا % % 5(@)(@@) % قول واش أتاك عنا بصرم ، % أو نصيح يريد أن تقطعينا % % 6(@)(@@) % ويميني بمثل ذلك أني % % لا أصافي سواك في العالمينا % % 7(@)(@@) % ثم غيرت ما فعلت بفعل ، % كان فيه خلاف ما تعدينا % % 8(@)(@@) % فلئن كنت قد تغيرت بعدي ، % ورضيت الغداة أن تصرمينا % % 9(@)(@@) % ونسيت الذي عهدت إلينا % % في أمور خلون أن تعلمينا % % 10(@)(@@) % لا تزالين آثر الناس عندي ، % فاعلمي ذاك في الهوى ما حيينا % % PageV01P551 البحر : خفيف تام 1(@)(@@) % حدثينا ، قريب ، ما تأمرينا % % إن قلبي أمسى بهند رهينا % % 2(@)(@@) % ما أراه إلا سيقضي عليه % % ناظر الحب ، خشية أن تبينا % % 3(@)(@@) % ثم قالت : وددت أن شفاء % لك ، يحمى منه الغداة ، يقينا % % 4(@)(@@) % إن نأت غربة بهند ، فإنا % % قد خشينا أن لا تقارب حينا % % 5(@)(@@) % فأشارت بأن قلبي مريض % من هواكم يجن وجدا رصينا % % 6(@)(@@) % ف لتمس ناصحا قريبا من النص % ح ، لطيفا ، لما تريد ، مكينا % % 7(@)(@@) % لا يخون الخليل شيئا ، ولكن % ربما يحسب المطيع أمينا % % 8(@)(@@) % فيرى فعله فيسدي إليه ، % وهو في ذاك ب لحرى أن يخونا % % 9(@)(@@) % يعلمث الله أنه لأمين ، % قبحت طينة الخيانة طينا ! % PageV01P552 البحر 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms121# : خفيف تام 1(@)(@@) % لم ترى العين للثريا شبيها ، % بمسيل التلاع لما لتقينا % % 2(@)(@@) % أعملت طرفها إلي ، وقالت : % حب بالسائرين زورا إلينا % % 3(@)(@@) % ثم قالت لأختها : قد ظلمنا ، % إن رجعناه خئبا ، واعتدينا % % 4(@)(@@) % وضربنا الحديث ظهرا لبطن ، % وأتينا من أمرنا ما شتهينا % % 5(@)(@@) % في خلاء من الأنيس ، وأمن ، % فشفينا غليله ، واشتفينا % % 6(@)(@@) % فلبثنا بذاك عشرا تباعا ، % فقضينا ديوننا ، و قتضينا % % 7(@)(@@) % كان ذا في مسيرنا ، ورجعنا ، % علم الله ، منه ما قد نوينا % % PageV01P553 البحر : خفيف تام 1(@)(@@) % عاودض القلب من تذكر جمل ، % ما يهيج المتيم المحزونا % % 2(@)(@@) % إن ما اورثت من الحب جمل ، % كاد يبدي المجمجم المكنونا % % 3(@)(@@) % ليلة السبت ، إذ نظرت إليها % % نظرة زادت الفؤاد جنونا % % 4(@)(@@) % إن ممشاك دون دار عدي ، % كان للقلب فتنة وفتونا % % 5(@)(@@) % وتراءت على البلاط ، فلما % % واجهتنا كالشمس تعشي العيونا % % 6(@)(@@) % وجلا بردها ، وقد حسرته ، % نور بدر يضيء للناظرينا % % 7(@)(@@) % قال هارون : قف ، فيا ليت أني % % كنت طاوعت ساعة هارونا % % 8(@)(@@) % ونهتني عن النساء ، وحلت % منزلا من حمى الفؤاد مكينا % % 9(@)(@@) % ثم شكت ، فلست أعرف منها % % مقة لي ، ولا قلى مستبينا % % 10(@)(@@) % غير أني أؤمل الوصل منها ، % أمل المرتجي بغيب ظنونا % % PageV01P554 البحر : بسيط تام 1(@)(@@) % هل تعرف الدار والأطلال والدمنا ، % زدن الفؤاد ، على علاته ، حزنا % % 2(@)(@@) % دار لأسماء قد كانت تحل بها ، % وأنت ، إذ ذاك ، إذ كانت لنا وطنا % % 3(@)(@@) % لم يحبب القلب شيئا مثل حبكم ، % ولم تر العين شيئا بعدكم حسنا % % 4(@)(@@) % ما غن أبالي ، إذا ما الله قربكم ، % من كان شط من الأحباب أو قطنا % % 6(@)(@@) % % وإن تجودي فقد عنيتني زمنا % % 7(@)(@@) % أمسى الفؤاد بكم يا هند مرتهنا % وأنت كنت الهوى و لهم و لوسنا % % 8(@)(@@) % إذ تستبيك بمصقول عوارضه ، % ومقلتي شادن لم يعد أن شدنا % % PageV01P555 البحر : بسيط تام 1(@)(@@) % قل للمنازل بالظهران قد حانا % % أن تنطقي فتبيني اليوم تبيانا % % 2(@)(@@) % ردي علينا بما قلنا تحيتنا % % وحدثينا : متى بان الذي بانا ؟ % 3(@)(@@) % قالت : ومن أنت أذكر ؟ قال : ذو شجن % قد هاج منه نحيب الحب أحزانا % % 4(@)(@@) % قالت : فأنت لذي أرسلت جارية % وهنا إلى الركب تدعى أم سفيانا ؟ % 5(@)(@@) % ثم أنخت وراء العرق أبعرة ، % أتين من ركبه الأعلى ، وركبانا % % 6(@)(@@) % ثم أتيت تخطى الركب مستترا 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms122# ، % حتى لقيت لدى البطحاء إنسانا % % 7(@)(@@) % قلت : نعم ، فأبيني في محاورة ، % وحدثيني حديث الركب من كانا % % 8(@)(@@) % ذاك الزمان الذي فيه مودتكم ، % فقد تبدل بعد العهد أزمانا % % 9(@)(@@) % وقد مضت حجج من بعد ، أربعة ، % وأشهر و نتفضنا لعام شعبانا % % 10(@)(@@) % فبت ما إن أرى شيئا أسر به ، % إلا الحديث ، وغمز الكف أحيانا % % PageV01P556 11(@)(@@) % حتى إذا الركب ريعوا قمت منصرفا ، % مشي النزيف يكف الدمع تهتانا % % PageV01P557 البحر : كامل تام 1(@)(@@) % قال الخليط : غدا تصدعنا ، % أو بعده ، أفلا تشيعنا ؟ % 2(@)(@@) % أما الرحيل فدون بعد غد ، % فمتى تقول : الدار تجمعنا ؟ % 3(@)(@@) % لتشوقنا هند ، وقد قتلت % علما بأن البين فاجعنا % % 4(@)(@@) % عجبا لموقفها وموقفنا ، % وبسمع تربيها تراجعنا % % 5(@)(@@) % ومقالها : سر ليلة معنا ، % نعهد ، فإن البين شائعنا % % 6(@)(@@) % قلت : العيون كثيرة معكم ، % وأظن أن السير مانعنا % % 7(@)(@@) % لا بل نزوركم بأرضكم ، % فيطاع قائلكم وشافعنا % % 8(@)(@@) % قالت : أشيء أنت فاعله % هذا ، لعمرك ، أم تخادعنا ؟ % 9(@)(@@) % ب لله حدث مانؤمله % واصدق ، فإن الصدق واسعنا % % 10(@)(@@) % إضرب لنا أجلا نعد له % إخلاف موعده تقاطعنا % % PageV01P558 البحر : خفيف تام 1(@)(@@) % أجمعت خلتي مع الهجر بينا ، % جلل لله ذلك الوجه زينا ! % 2(@)(@@) % أجمعت بينها ، ولم نك منها % % لذة العيش والشباب قضينا % % 3(@)(@@) % فتولت حمولها ، و ستقلت ، % لم تنل طائلا ، ولم نقض دينا % % 4(@)(@@) % فأصابت به فؤادي ، فهاجت % حزنا لي ، مبرحا كان حينا % % 5(@)(@@) % ولقد قلت ، يوم مكة لما % % أرسلت تقرأ السلام علينا : % 6(@)(@@) % أنعم الله بالرسول الذي أر % % سل ، والمرسل الرسالة ، عينا % % PageV01P559 البحر : وافر تام 1(@)(@@) % تقول وليدتي ، لما رأتني % % طربت ، وكنت قد أقصرت حينا : % 2(@)(@@) % أراك اليوم قد أحدثت شوقا % وعاد لك الهوى داء دفينا % % 3(@)(@@) % وكنت زعمت أنك ذو عزاء ، % إذا ما شئت ، فارقت القرينا % % 4(@)(@@) % بربك ، هل أتاك لها رسول ، % فشاقك ، أم لقيت لها خدينا ؟ % 5(@)(@@) % فقلت : شكا إلي أخ محب % كبعض زماننا ، إذ تعلمينا % % 6(@)(@@) % فقص علي ما يلقى بهند % % 7(@)(@@) % فوافق بعض ما قد تعرفينا % % مشوق حين يلقى العاشقينا % % 8(@)(@@) % وكم من خلة أعرضت عنها ، % لغير قلى وكنت بها ضنينا % % 9(@)(@@) % أردت فراقها وصبرت عنها % % ولو جن الفؤاد بها جنونا % % PageV01P560 البحر : خفيف تام 1(@)(@@) % أستعين لذي بكفيه نفعي ، % ورجائي ، على التي قتلتني % % 2(@)(@@) % ولقد كنت قد عرفت ، وأبصر % ت 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms123# أمورا ، لو أنها نفعتني % % 3(@)(@@) % قلت : إني أهوى شفا ما ألاقي % % من خطوب تتابعت ، فدحتني % % PageV01P561 البحر : وافر تام 1(@)(@@) % أحن إذا رأيت جمال سعدى ، أحن إذا رأيت جمال سعدى ، % وأبكي ، إن رأيت لها قرينا % % 2(@)(@@) % وقد أفد الرحيل فقل لسعدى % % لعمرك ، خبري ما تأمرينا % % 3(@)(@@) % الا ياليل ، إن شفاء نفسي % % نوالك ، إن بخلت ، فزودينا % % PageV01P562 البحر : خفيف تام 1(@)(@@) % أيها الطارق الذي قد عناني ، % بعدما نام سامر الركبان % 2(@)(@@) % زار من نازح بغير دليل ، % يتخطى إلي ، حتى أتاني % % PageV01P563 البحر : خفيف تام 1(@)(@@) % أيها المنكح الثريا سهيلا ، % عمرك لله ، كيف يلتقيان % 2(@)(@@) % هي شامية إذا ما استقلت ، % لو تخوفت جفوة وصدودا ، أ % % PageV01P564 البحر : خفيف تام 1(@)(@@) % أصبح القلب مستهاما معنى % % بفتاة ، من أسوإ الناس ظنا % % 2(@)(@@) % قلت يوما لها وحركت العة % % د بمضرابها ، فغنت ، وغنى % % 3(@)(@@) % ليتني كنت ظهر عودك يوما ، % فإذا ما حتضنتني ، كنت بطنا % % 4(@)(@@) % فبكت ، ثم أعرضت ، ثم قالت : % من بهذا أتاك ، في اليوم ، عنا ؟ % 5(@)(@@) % لو تخوفت جفوة وصدودا ، % ما تطلبت ذا ، لعمرك ، منا % % 6(@)(@@) % قلت لما رأيت : خلك منه ، % بأبي ، ما عليك أن أتمنى ؟ % PageV01P565 البحر : خفيف تام 1(@)(@@) % عاود القلب بعض ما قد شجاه ، % من حبيب أمسى هوانا هواه % 2(@)(@@) % يا لقوم ، وكيف صبري عن من % لا ترى النفس طيب عيش سواه ؟ % 3(@)(@@) % أرسلت ، إذ رأت بعادي ، أن لا % % يقبلن بي محرشا ، إن اتاه % 4(@)(@@) % لا تطع بي ، فدتك نفسي ، عدوا % لحديث على هواه افتراه % 5(@)(@@) % لا تطع بي ، من لو رآني وإيا % % ك أسيري ضرورة ، ما عناه % 6(@)(@@) % واجتنابي بيت الحبيب ، وما الخل % % د بأشهى إلي من أن أراه % % 7(@)(@@) % ما ضراري نفسي بهجرة من لي % % س مسيئا ، ولا بعيدا ثراه % % 8(@)(@@) % دون أن يسمع المعاذر مني ، % أو يرى عاتبا ، فعندي رضاه % % PageV01P566 البحر : رجز تام 1(@)(@@) % خانك من تهوى فلا تخنه % وكن وفيا ، إن سلوت عنه % 2(@)(@@) % و سلك سبيل وصله وصنه % إن كان غدارا فلا تكنه % 3(@)(@@) % عسى تباريح تجيء منه ، % فيرجع الوصل ولم تشنه % PageV01P567 البحر : وافر تام 1(@)(@@) % تأوب عينه وهنا قذاها ، % وداواها الطبيب ، فما شفاها % % 2(@)(@@) % وأحدث قلبه خطرات حب ، % واحدث شوقه حزنا عراها % % 3(@)(@@) % لمن لا داره تدنو ، ولا قد 
urn:cts:arabLit:0093IbnAbiRabica.Diwan.JK007556-ara1:ms124# % % عدت ، من دون رؤيته عداها % % 4(@)(@@) % وشاقني المنى للقاء هند ، % وعرض الأرض واسعة سواها % % 5(@)(@@) % فلما أن بدت شمس تجلت % من الأستار ، أبرزها دجاها % % 6(@)(@@) % ذكرت الشوق والأهواء يوما ، % يهيج لنفس متبول مناها % % 7(@)(@@) % وكنت إذا رأيت فتاة ملك % منعمة ، أربت بأن أراها % % 8(@)(@@) % ورمت الوصل ، إن لهن وصلا % شفاء النفس ، إن شيء شفاها % % PageV01P568 البحر : وافر تام 1(@)(@@) % لعائشة بنة التيمي عندي % % حمى في القلب ، ما يرعى حماها % % 2(@)(@@) % يذكرني بنة التيمي ظبي % يرود بروضة سهل رباها % % 3(@)(@@) % فقلت له ، وكادع يراع قلبي : % فلم أر قط كاليوم اشتباها % % 4(@)(@@) % سوى حمش بساقك مستبين ، % وأن شواك لم يشبه شواها % % 5(@)(@@) % وأنك عاطل ، عار ، وليست % بعارية ، ولا عطل يداها % % 6(@)(@@) % وانك غير أفرع ، وهي تدلي % % على المتنين أسحم قد كساها % % 7(@)(@@) % ولو قعدت ، ولم تكلف بود ، % سوى ما قد كلفت به ، كفاها % % 8(@)(@@) % أظل ، إذا أكلمها ، كأني % % أكلم حية غلبت رقاها % % 9(@)(@@) % تبيت إلي ، بعد النوم ، تسري % % وقد أمسيت لا أخشى سراها % % PageV01P569 البحر : رمل تام 1(@)(@@) % قد صبا القلب صبا غير دني ، % وقضى الاوطار من أم علي % % 2(@)(@@) % وقضى الأوطار منها ، بعدما % % كادت الأوطار أن لا تنقضي % % 3(@)(@@) % ودعاه الحين منه للتي % % تقطع الغلات ب لدل البهي % % 4(@)(@@) % فارعوى عنها بصبر ، بعدما % % كان عنها زمنا لا يرعوي % % 5(@)(@@) % كلما قلت : تناسى ذكرها ، % راجع القلب الذي كان نسي % % 6(@)(@@) % فلها ، وارتاح للخود التي % % تيمت قلبي بذي طعم شهي % % 7(@)(@@) % بارد الطعم ، شتيت نبته % ك لأقاحي ، ناعم النبت ثري % % 8(@)(@@) % واضح ، عذب ، إذا ما ابتسمت ، % لاح لوح البرق في وسط الحبي % % 9(@)(@@) % طيب الريق ، إذا ما ذقته ، % قلت : ثلج ، شيب بالمسك الذكي % % 10(@)(@@) % وبطرف خلته ، حين بدت ، % طرف أم الخشف في عرف ندي % % PageV01P570 11(@)(@@) % وبفرع قد تدلى ، فاحم ، % كتدلي قنو نخل المجتني % % 12(@)(@@) % وبوجه حسن صورته ، % واضح السنة ، ذي ثغر نقي % % 13(@)(@@) % وبجيد أغيد ، زينه % خالص الدر ، وياقوت بهي % % 14(@)(@@) % ولها في القلب مني لوعة ، % كل حين ، هي في القلب تجي % % 15(@)(@@) % من يكن أمسى خليا من هوى ، % ففؤادي ليس منها بخلي % % 16(@)(@@) % أو يكن أمسى تقيا قلبه ، % فلعمري إن قلبي لغوي % % PageV01P571