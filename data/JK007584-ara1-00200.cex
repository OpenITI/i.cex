urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms1#(@)(@)(@@) البحر : مجزوء الرمل 1(@)(@@) % صاحب لما أساء % أتبع الدلو الرشاء % 2(@)(@@) % رب داء لا أرى من % % ه سوى الصبر شفاء % 3(@)(@@) % أحمد الله على ما % % سر من أمري وساء % PageV01P001 البحر : مخلع البسيط 1(@)(@@) % كان قضيبا له انثناء % و كان بدرا له ضياء % 3(@)(@@) % فزاده ربه عذارا % تم به الحسن والبهاء % 4(@)(@@) % كذلك الله كل وقت % يزيد في الخلق ما يشاء % PageV01P002 البحر : متقارب تام 1(@)(@@) % أيا سيدا عمني جوده ، % بفضلك نلت السنى والسناء % 2(@)(@@) % و كم قد أتيتك من ليلة ! % فنلت الغنى وسمعت الغناء % PageV01P003 البحر : كامل تام 1(@)(@@) % أقناعة ، من بعد طول جفاء ، % بدنو طيف من حبيب ناء ! % 2(@)(@@) % بأبي وأمي شادن قلنا له : % نفديك بالأمات والآباء % 3(@)(@@) % رشأ إذا لحظ العفيف بنظرة % كانت له سببا إلى الفحشاء % 4(@)(@@) % وجناته تجني على عشاقه % ببديع ما فيها من اللألآء % 5(@)(@@) % بيض علتها حمرة فتوردت % مثل المدام خلطتها بالماء % 6(@)(@@) % فكأنما برزت لنا بغلالة % بيضاء تحت غلالة حمراء % 7(@)(@@) % كيف اتقاء لحاظه ؛ وعيوننا % % طرق لأسهمها إلى الأحشاء ؟ % 8(@)(@@) % صبغ الحيا خديه لون مدامعي % % فكأنه يبكي بمثل بكائي % % 9(@)(@@) % كيف اتقاء جآذر يرميننا % % بظبى الصوارم من عيون ظباء ؟ % 10(@)(@@) % يا رب تلك المقلة النجلاء ، % حاشاك مما ضمنت أحشائي ؟ % PageV01P004 11(@)(@@) % جازيتني بعدا بقربي في الهوى % % ومنحتني غدرا بحسن وفائي % % 12(@)(@@) % جادت عراصك يا شآم سحابة % عراضة من أصدق الأنواء ! % 13(@)(@@) % بلد المجانة والخلاعة والصبا % % ومحل كل فتوة وفتاء % 14(@)(@@) % أنواع زهر والتفاف حدائق % وصفاء ماء واعتدال هواء % 15(@)(@@) % وخرائد مثل الدمى يسقيننا % % كأسين من لحظ ومن صهباء % 16(@)(@@) % وإذا أدرن على الندامى كأسها % % غنيننا شعر ابن أوس الطائي % % 18(@)(@@) % فارقت ، حين شخصت عنها ، لذتي % % وتركت أحوال السرور ورائي % % 19(@)(@@) % و نزلت من بلد ' الجزيرة ' منزلا % خلوا من الخلطاء والندماء % 20(@)(@@) % فيمر عندي كل طعم طيب % من ريقها ويضيق كل فضاء % 21(@)(@@) % ألشام لا بلد الجزيرة لذتي % % و ' قويق ' لا ماء ' الفرات ' منائي % % PageV01P005 22(@)(@@) % وأبيت مرتهن الفؤاد بمنبج الس % وداء لا ' بالرقة ' البيضاء % 23(@)(@@) % من مبلغ الندماء : أني بعدهم % أمسي نديم كواكب الجوزاء ؟ % 24(@)(@@) % ولقد رعيت فليت شعري من رعى % % منكم على بعد الديار إخائي ؟ % 25(@)(@@) % فحم الغبي وقلت غير ملجلج : % إني لمشتاق إلى العلياء % 26(@)(@@) % وصناعتي ضرب السيوف 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms2# وإنني % % متعرض في الشعر بالشعراء % 27(@)(@@) % و الله يجمعنا بعز دائم % و سلامة موصولة ببقاء % PageV01P006 البحر : متقارب تام 1(@)(@@) % أما يردع الموت أهل النهى % % ويمنع عن غيه من غوى ! % 2(@)(@@) % أما عالم ، عارف بالزمان % يروح ويغدو قصير الخطا % % 3(@)(@@) % فيا لاهيا ، آمنا ، والحمام % إليه سريع ، قريب المدى % % 4(@)(@@) % يسر بشيء كأن قد مضى ، % و يأمن شيئا كأن قد أتى % % 5(@)(@@) % إذا ما مررت بأهل القبور % تيقنت أنك منهم غدا % % 6(@)(@@) % و أن العزيز ، بها ، والذليل % سواء إذا أسلما للبلى % % 7(@)(@@) % غريبين ، ما لهما مؤنس ، % وحيدين ، تحت طباق الثرى % % 8(@)(@@) % فلا أمل غير عفو الإله % ولا عمل غير ما قد مضى % % 9(@)(@@) % فإن كان خيرا فخيرا تنال ؛ % و إن كان شرا فشرا يرى % % PageV01P007 البحر : مجزوء الرجز 1(@)(@@) % كأنما تساقط الثلج % ج بعيني من رأى % % 2(@)(@@) % أوراق ورد أبض % والناس في شاذكلى % % PageV01P008 البحر : متقارب تام 1(@)(@@) % أتزعم أنك خدن الوفاء % وقد حجب الترب من قد حجب % 2(@)(@@) % فإن كنت تصدق فيما تقول % فمت قبل موتك مع من تحب % 3(@)(@@) % وإلا فقد صدق القائلون : % ما بين حي وميت نسب % 4(@)(@@) % عقيلتي استلبت من يدي % % و لما أبعها ولما أهب % 5(@)(@@) % وكنت أقيك ، إلى أن رمتك % يد الدهر من حيث لم أحتسب % 6(@)(@@) % فما نفعتني تقاتي عليك % ولا صرفت عنك صرف النوب % 7(@)(@@) % فلا سلمت مقلة لم تسح % ولا بقيت لمة لم تشب % 8(@)(@@) % يعزون عنك وأين العزاء ! ؟ % و لكنها سنة تستحب % 9(@)(@@) % ولو رد بالرزء ما تستحق % لما كان لي في حياة أرب % PageV01P009 البحر : متقارب تام 1(@)(@@) % أسيف الهدى ، وقريع العرب % علام الجفاء وفيم الغضب ؟ % 2(@)(@@) % وما بال كتبك قد أصبحت % تنكبني مع هذي النكب % 3(@)(@@) % وأنت الكريم ، وأنت الحليم ، % وأنت العطوف ، وأنت الحدب % 4(@)(@@) % و مازلت تسبقني بالجميل % و تنزلني بالجناب الخصب % 5(@)(@@) % وتدفع عن حوزتي الخطوب ، % وتكشف عن ناظري الكرب % 6(@)(@@) % و إنك للجبل المشمخ % % ر لي بل لقومك بل للعرب % 7(@)(@@) % على تستفاد ، ومال يفاد ، % وعز يشاد ، ونعمى ترب % 8(@)(@@) % و ما غض مني هذا الإسار % و لكن خلصت خلوص الذهب % 9(@)(@@) % ففيم يقرعني بالخمو % % ل مولى به نلت أعلى الرتب ؟ % 10(@)(@@) % وكان عتيدا لدي الجواب ، % ولكن لهيبته لم أجب % PageV01P010 11(@)(@@) % فأشكر 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms3# ما كنت في ضجرتي ، % و أني عتبتك فيمن عتب ! % 12(@)(@@) % فألا رجعت فأعتبتني ، % وصيرت لي ولقولي الغلب ! % 13(@)(@@) % فلا تنسبن إلي الخمول % أقمت عليك فلم أغترب % 14(@)(@@) % وأصبحت منك فإن كان فضل % وبيني وبينك فوق النسب ! % 15(@)(@@) % و ما شككتني فيك الخطوب % و لا غيرتني فيك النوب % 16(@)(@@) % و أسكن ما كنت في ضجرتي % % وأحلم ما كنت عند الغضب % 17(@)(@@) % وإن خراسان إن أنكرت % علاي فقد عرفتها ' حلب ' % 18(@)(@@) % ومن أين ينكرني الأبعدون % أمن نقص جد أمن نقص أب ؟ ! % 19(@)(@@) % ألست وإياك من أسرة ، % و بيني وبينك قرب النسب ! % 20(@)(@@) % وداد تناسب فيه الكرام ، % و تربية ومحل أشب ! % PageV01P011 21(@)(@@) % و نفس تكبر إلا عليك % وترغب إلاك عمن رغب ! % 22(@)(@@) % فلا تعدلن ، فداك ابن عم % ك لا بل غلامك - عما يجب % 23(@)(@@) % و أنصف فتاك فإنصافه % من الفضل والشرف المكتسب % 24(@)(@@) % وكنت الحبيب وكنت القريب % ليالي أدعوك من عن كثب % 25(@)(@@) % فلما بعدت بدت جفوة % و لاح من الأمر ما لا أحب % 26(@)(@@) % فلو لم أكن بك ذا خبرة % لقلت : صديقك من لم يغب % PageV01P012 البحر : مجزوء الكامل 1(@)(@@) % لله برد ما أش % % د ومنظر ما كان أعجب % 2(@)(@@) % جاء الغلام بناره % حمراء في جمر تلهب % 3(@)(@@) % فكأنما جمع الحل % % ي فمحرق منها ومذهب % 4(@)(@@) % ثم انطفت فكأنها % % ما بيننا ند مشعب % PageV01P013 البحر : متقارب تام 1(@)(@@) % تقر دموعي بشوقي إليك % و يشهد قلبي بطول الكرب % 2(@)(@@) % وإني لمجتهد في الجحود ، % ولكن نفسي تأبى الكذب % 3(@)(@@) % وإني عليك لجاري الدموع ، % وإني عليك لصب وصب % 4(@)(@@) % و ما كنت أبقي على مهجتي % % لو أني انتهيت إلى ما يجب % 5(@)(@@) % و لكن سمحت لها بالبقاء % رجاء اللقاء على ما تحب % 6(@)(@@) % و يبقي اللبيب له عدة % لوقت الرضا في أوان الغضب % PageV01P014 البحر : متقارب تام 1(@)(@@) % و ما أنس لا أنس يوم المغار % محجبة لفظتها الحجب % 2(@)(@@) % دعاك ذووها بسوء الفعال % لما لا تشاء ، وما لا تحب % 3(@)(@@) % فوافتك تعثر في مرطها ، % و قد رأت الموت من عن كثب % 4(@)(@@) % وقد خلط الخوف لما طلع % ت دل الجمال بذل الرعب % 5(@)(@@) % تسارع في الخطو لا خفة ، % و تهتز في المشي لا من طرب % 6(@)(@@) % فلما بدت لك 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms4# فوق البيوت % بدا لك منهن جيش لجب % 7(@)(@@) % فكنت أخاهن إذ لا أخ % و كنت أباهن إذ ليس أب % 8(@)(@@) % وما زلت مذ كنت تأتي الجميل % و تحمي الحريم ، وترعى النسب % 9(@)(@@) % و تغضب حتى إذا ما ملكت % أطعت الرضا ، وعصيت الغضب % 10(@)(@@) % فولين عنك يفدينها ، % ويرفعن من ذيلها ما انسحب % PageV01P015 11(@)(@@) % ينادين بين خلال البيو % % ت : لا يقطع الله نسل العرب % 12(@)(@@) % أمرت - وأنت المطاع الكريم - % ببذل الأمان ورد السلب % 13(@)(@@) % و قد رحن من مهجات القلوب % بأوفر غنم وأغلى نشب % 14(@)(@@) % فإن هن يابن السراة الكرام ، % رددن القلوب رددنا النهب % PageV01P016 البحر : مجزوء الكامل 1(@)(@@) % الشعر ديوان العرب ، % أبدا ، وعنوان النسب % 2(@)(@@) % لم أعد فيه مفاخري % % و مديح آبائي النجب % 3(@)(@@) % و مقطعات ربما % % حليت منهن الكتب % 4(@)(@@) % لا في المديح ولا الهجاء % ء ولا المجون ولا اللعب % PageV01P017 البحر : مجزوء الكامل 1(@)(@@) % لن للزمان ، وإن صعب % وإذا تباعد فاقترب % 2(@)(@@) % لا تكذبن ، من غالب ال % % أيام كان لها الغلب % PageV01P018 البحر : طويل 1(@)(@@) % ألا إنما الدنيا مطية راكب % علا راكبوها ظهر أعوج أحدبا % % 2(@)(@@) % شموس متى أعطتك طوعا زمامها % % فكن للأذى من عقها مترقبا % % PageV01P019 البحر : بسيط تام 1(@)(@@) % من كان أنفق في نصر الهدى نشبا % فأنت أنفقت فيه النفس والنشبا % % 2(@)(@@) % يذكي أخوك شهاب الحرب معتمدا % فيستضيء ، ويغشى جدك اللهبا % % PageV01P020 البحر : طويل 1(@)(@@) % أتزعم ، يا ضخم اللغاديد ، أننا % % ونحن أسود الحرب لا نعرف الحربا % % 2(@)(@@) % فويلك ؛ من للحرب إن لم نكن لها ؟ % ومن ذا الذي يمسي ويضحي لها تربا ؟ % 3(@)(@@) % و من ذا يلف الجيش من جنباته ؟ % و من ذا يقود الشم أو يصدم القلبا ؟ % 4(@)(@@) % وويلك ؛ من أردى أخاك ' بمرعش ' % وجلل ضربا وجه والدك العضبا ؟ % 5(@)(@@) % وويلك من خلى ابن أختك موثقا ؟ % وخلاك باللقان تبتدر الشعبا ؟ % 6(@)(@@) % أتوعدنا بالحرب حتى كأننا % % و إياك لم يعصب بها قلبنا عصبا ؟ % 7(@)(@@) % لقد جمعتنا الحرب من قبل هذه % فكنا بها أسدا ؛ وكنت بها كلبا % % 8(@)(@@) % فسل ' بردسا ' عنا أباك وصهره % وسل آل ' برداليس ' أعظمكم خطبا ! % 9(@)(@@) % وسل قرقواسا والشميشق صهره ، % وسل سبطه البطريق أثبتكم قلبا % % 10(@)(@@) % وسل صيدكم آل الملاين إننا % % نهبنا ببيض الهند عزهم نهبا ! % PageV01P021 11(@)(@@) % و سل آل ' بهرام 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms5# ' وآل ' بلنطس ' % و سل آل ' منوال ' الجحاجحة الغلبا ! % 12(@)(@@) % و سل ' بالبرطسيس ' العساكر كلها % % و سل ' بالمنسطرياطس ' الروم والعربا % % 13(@)(@@) % ألم تفنهم قتلا وأسرا سيوفنا % % وأسد الشرى الملأى وإن جمدت رعبا % % 14(@)(@@) % بأقلامنا أجحرت أم بسيوفنا ؟ % و أسد الشرى قدنا إليك أم الكتبا ؟ % 15(@)(@@) % تركناك في بطن الفلاة تجوبها % % كما انتفق اليربوع يلتثم التربا % % 16(@)(@@) % تفاخرنا بالطعن والبضرب في الوغى % % لقد أوسعتك النفس يابن استها كذبا % % 17(@)(@@) % رعى الله أوفانا إذا قال ذمة % وأنفذنا طعنا ، وأثبتنا قلبا % % 18(@)(@@) % وجدت أباك العلج لما خبرته % أقلكم خيرا ، وأكثركم عجبا % % PageV01P022 البحر : وافر تام 1(@)(@@) % ندل على موالينا ونجفو % % و نعتبهم وإن لنا الذنوبا % % 2(@)(@@) % بأقوال يجانبن المعاني % % و ألسنة يخالفن القلوبا % % PageV01P023 البحر : وافر تام 1(@)(@@) % أبت عبراته إلا انسكابا % % و نار ضلوعه إلا التهابا % % 2(@)(@@) % و من حق الطلول علي ألا % % أغب من الدموع لها سحابا % % 3(@)(@@) % وما قصرت في تسآل ربع ، % و لكني سألت فما أجابا % % 4(@)(@@) % رأيت الشيب لاح فقلت : أهلا ! % وودعت الغواية والشبابا % % 5(@)(@@) % وما إن شبت من كبر ، ولكن % رأيت من الأحبة ما أشابا % % 6(@)(@@) % بعثن من الهموم إلي ركبا % و صيرن الصدود لها ركابا % % 7(@)(@@) % ألم ترنا أعز الناس جارا % و أمنعهم ؛ وأمرعهم جنابا ؟ ! % 8(@)(@@) % لنا الجبل المطل على نزار % حللنا النجد منه والهضابا % % 9(@)(@@) % تفضلنا الأنام ولا نحاشى % % و نوصف بالجميل ؛ ولا نحابى % % 10(@)(@@) % و قد علمت ' ربيعة ' بل ' نزار ' % بأنا الرأس والناس الذنابى % % PageV01P024 11(@)(@@) % فلما أن طغت سفهاء ' كعب ' % فتحنا بيننا للحرب بابا % % 12(@)(@@) % منحناها الحرائب غير أنا % % إذا جارت منحناها الحرابا % % 13(@)(@@) % و لما ثار ' سيف الدين ' ثرنا % % كما هيجت آسادا غضابا % % 14(@)(@@) % أسنته ، إذا لاقى طعانا ، % صوارمه ، إذا لاقى ضرابا % % 15(@)(@@) % دعانا - والأسنة مشرعات - % فكنا ، عند دعوته ، الجوابا % % 16(@)(@@) % صنائع فاق صانعها ففاقت ، % وغرس طاب غارسه ، فطابا % % 17(@)(@@) % و كنا كالسهام ؛ إذا أصابت % مراميها فراميها أصابا % % 18(@)(@@) % % و نكبن ' الصبيرة ' و ' القبابا ' % 19(@)(@@) % و جاوزن ' البدية ' صاديات ؛ % يلاحظن السراب ؛ ولا سرابا % % 20(@)(@@) % عبرن ' بماسح ' والليل طفل % وجئن إلى سلمية حين شابا % % PageV01P025 21(@)(@@) % فما شعروا بها إلا ثباتا % دوين الشد نصطخب اصطخابا % % 22(@)(@@) % % به الأرواح تنتهب انتهابا % % 23(@)(@@) % تنادوا ، فانبرت ، من كل فج ، % سوابق ينتجبن لنا انتجابا 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms6# % % 24(@)(@@) % وقاد ندي بن جعفر من عقيل % شعوبا ، قد أسلن به الشعابا % % 25(@)(@@) % فما كانوا لنا إلا أسارى % % و ما كانت لنا إلا نهابا % % 26(@)(@@) % كأن ' ندي بن جعفر ' قاد منهم % هدايا لم يرغ عنها ثوابا % % 27(@)(@@) % وشدوا رأيهم ببني قريع ، % فخابوا - لا أبا لهم - وخابا % % 28(@)(@@) % و لما اشتدت الهيجاء كنا % % أشد مخالبا ، وأحد نابا % % 29(@)(@@) % و أمنع جانبا ؛ وأعز جارا ؛ % و أوفى ذمة ؛ وأقل عابا % % 30(@)(@@) % سقينا بالرماح بني ' قشير ' % ببطن ' الغنثر ' السم المذابا % % PageV01P026 31(@)(@@) % و سقناهم إلى ' الحيران ' سوقا % كما نستاق آبالا صعابا % % 32(@)(@@) % و نكبنا ' الفرقلس ' لم نرده % كأن بنا عن الماء اجتنابا % % 33(@)(@@) % وملن عن الغوير وسرن حتى % % وردن عيون ' تدمر ' و ' الحبابا ' % 34(@)(@@) % و أمطرن ' الجباة ' بمرجحن % ولكن بالطعان المر صابا % % 35(@)(@@) % وجزن الصحصحان يخدن وخدا % و يجتبن الفلاة بنا اجتيابا % % 36(@)(@@) % قرينا ' بالسماوة ' من ' عقيل ' % سباع الأرض والطير السغابا % % 37(@)(@@) % و ' بالصباح ' و ' الصباح ' عبد % قتلنا ، من لبابهم اللبابا % % 38(@)(@@) % تركنا في بيوت بني ' المهنا ' % نوادب ينتحبن بها انتحابا % % 39(@)(@@) % شفت فيها بنو بكر حقودا % و غادرت ' الضباب ' بها ضبابا % % 40(@)(@@) % وأبعدنا لسوء الفعل كعبا % و أدنينا لطاعتها ' كلابا ' % PageV01P027 41(@)(@@) % وشردنا إلى الجولان طيئا % و جنبنا ' سماوتها ' جنابا % % 42(@)(@@) % سحاب ما أناخ على عقيل % و جر على جوارهم ذنابا % % 43(@)(@@) % وملنا بالخيول إلى نمير % تجاذبنا أعنتها جذابا % % 44(@)(@@) % % يعز على العشيرة أن يصابا % % 45(@)(@@) % وما ضاقت مذاهبه ، ولكن % يهاب ، من الحمية ، أن يهابا % % 46(@)(@@) % و يأمرنا فنكفيه الأعادي % % همام لو يشاء كفى ونابا % % 47(@)(@@) % فلما أيقنوا أن لا غياث % دعوه للمغوثة فاستجابا % % 48(@)(@@) % و عاد إلى الجميل لهم ؛ فعادوا % % وقد مدوا لصارمه الرقابا % % 49(@)(@@) % أمر عليهم خوفا وأمنا % أذاقهم به أريا وصابا % % 50(@)(@@) % أحلهم الجزيرة بعد يأس % أخو حلم إذا ملك العقابا % % PageV01P028 51(@)(@@) % % و أرضهم اغتصبناها اغتصابا % % 52(@)(@@) % ولو شئنا حميناها البوادي % % كما تحمي أسود الغاب غابا % % 54(@)(@@) % أنا ابن الضاربين الهام قدما % إذا كره المحامون الضرابا % % 55(@)(@@) % ألم تعلم ؟ ومثلك قال حقا : % بأني كنت أثقبها شهابا ! % PageV01P029 البحر : وافر تام 1(@)(@@) % أتعجب أن ملكنا الأرض قسرا % وأن تمسي وسائدنا الرقاب ؟ ! % 2(@)(@@) % و تربط في مجالسنا المذاكي % % و تبرك بين أرجلنا الركاب ؟ % 3(@)(@@) % فهذا العز أثبته العوالي % % و 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms7# هذا الملك مكنه الضراب % 4(@)(@@) % و أمثال القسي من المطايا % % يجب غراسها الخيل العراب % 5(@)(@@) % فقصرا ! إن حالا ملكتنا % % لحال لا تذم ولا تعاب % PageV01P030 البحر : كامل تام 1(@)(@@) % احذر مقاربة اللئام ! فإنه % ينبيك ، عنهم في الأمور ، مجرب % 2(@)(@@) % قوم ، إذا أيسرت ، كانوا إخوة % و إذا تربت ، تفرقوا وتجنبوا % % 3(@)(@@) % اصبر على ريب الزمان فإنه % بالصبر تدرك كل ما تتطلب % PageV01P031 البحر : طويل 1(@)(@@) % قناتي على ما تعهدان صليبة ، % وعودي ، على ما تعلمان صليب % 2(@)(@@) % صبور على طي الزمان ونشره ؛ % و إن ظهرت للدهر في ندوب % 3(@)(@@) % و إن فتى لم يكسر الأسر قلبه % وخوض المنايا جده لنجيب % PageV01P032 البحر : طويل 1(@)(@@) % أقر له بالذنب ؛ والذنب ذنبه % ويزعم أني ظالم ، فأتوب % 2(@)(@@) % ويقصدني بالهجر علما بأنه % إلي ، على ما كان منه ، حبيب % 3(@)(@@) % و من كل دمع في جفوني سحابة % و من كل وجد في حشاي لهيب % PageV01P033 البحر : طويل 1(@)(@@) % أساء فزادته الإساءة حظوة ، % حبيب ، على ما كان منه ، حبيب % 2(@)(@@) % يعد علي العاذلون ذنوبه % ومن أين للوجه المليح ذنوب ؟ % 3(@)(@@) % فيا أيها الجاني ، ونسأله الرضا % % ويا أيها الجاني ، ونحن نتوب ! % 4(@)(@@) % لحى الله من يرعاك في القرب وحده % % ومن لا يحوط الغيب حين تغيب % PageV01P034 البحر : طويل 1(@)(@@) % أبيت كأني للصبابة صاحب ، % و للنوم مذ بان الخليط ، مجانب % 2(@)(@@) % وما أدعي أن الخطوب تخيفني % % لقد خبرتني بالفراق النواعب % 3(@)(@@) % و لكنني ما زلت أرجو وأتقي % % وجد وشيك البين والقلب لاعب % 4(@)(@@) % و ماهذه في الحب أول مرة % أساءت إلى قلبي الظنون الكواذب % 5(@)(@@) % علي لربع ' العامرية ' وقفة % تمل علي الشوق والدمع كاتب % 6(@)(@@) % فلا ، وأبي العشاق ، ما أنا عاشق % إذا هي لم تلعب بصبري الملاعب % 7(@)(@@) % و من مذهبي حب الديار لأهلها % % وللناس فيما يعشقون مذاهب % 8(@)(@@) % عتادي لدفع الهم نفس أبية % وقلب على ما شئت منه مصاحب % 9(@)(@@) % حسود على الأمر الذي هو عائب % وخوص كأمثال القسي نجائب % 10(@)(@@) % تكاثر لوامي على ما أصابني % % كأن لم تنب إلا بأسري النوائب % PageV01P035 11(@)(@@) % يقولون : ' لم ينظرعواقب أمره ' % و مثلي من تجري عليه العواقب % 12(@)(@@) % ألألم يعلم الذلان أن بني الوغى % % كذاك ، سليب بالرماح وسالب % 13(@)(@@) % أرى ملء عيني الردى فأخوضه % إذ الموت 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms8# قدامي وخلفي المعايب % 14(@)(@@) % وإن وراء الحزم فيها ودونه % مواقف تنسى دونهن التجارب % 16(@)(@@) % و أعلم قوما لو تتعتعت دونها % % لأجهضني بالذم منهم عصائب % 17(@)(@@) % و مضطغن لم يحمل السر قلبه % تلفت ثم اغتابني ، وهو هائب % 18(@)(@@) % تردى رداء الذل لما لقيته % كما تتردى بالغبار العناكب % 19(@)(@@) % ومن شرفي أن لا يزال يعيبني % % حسود على الأمر الذي هو عاتب % 20(@)(@@) % رمتني عيون الناس حتى أظنها % % ستحسدني ، في الحاسدين ، الكواكب % 21(@)(@@) % فلست أرى إلا عدوا محاربا ، % و آخر خير منه عندي المحارب % PageV01P036 22(@)(@@) % ويرجون إدراك العلا بنفوسهم % ولم يعلموا أن المعالي مواهب % 23(@)(@@) % فكم يطفئون المجد والله موقد % وكم ينقصون الفضل والله واهب % 24(@)(@@) % و هل يدفع الإنسان ما هو واقع % وهل يعلم الإنسان ما هو كاسب ؟ % 25(@)(@@) % و هل لقضاء الله في الخلق غالب % وهل لقضاء الله في الخلق هارب ؟ % 26(@)(@@) % % ولا ذنب لي إن حاربتني المطالب % 27(@)(@@) % وهل يرتجي للأمر إلا رجاله % ويأتي بصوب المزن إلا السحائب ! ؟ % 28(@)(@@) % و عندي صدق الضرب في كل معرك % و ليس علي إن نبون المضارب % 29(@)(@@) % إذا كان ' سيف الدولة ' الملك كافلي % % فلا الحزم مغلوب ولا الخصم غالب % 30(@)(@@) % إذا الله لم يحرزك مما تخافه ، % علي لسيف الدولة القرم أنعم % 31(@)(@@) % ولا سابق مما تخيلت سابق ، % ولا صاحب مما تخيرت صاحب % PageV01P037 33(@)(@@) % أأجحده إحسانه في ، إنني % % لكافر نعمى ، إن فعلت ، موارب % 34(@)(@@) % لعل القوافي عقن عما أردته ، % فلا القول مردود ولا العذر ناضب % 35(@)(@@) % و لا شك قلبي ساعة في اعتقاده % ولا شاب ظني قط فيه الشوائب % 36(@)(@@) % تؤرقني ذكرى له وصبابة ، % وتجذبني شوقا إليه الجواذب % 37(@)(@@) % ولي أدمع طوعى إذا ما أمرتها ، % وهن عواص في هواه ، غوالب % 38(@)(@@) % فلا تخش ' سيف الدولة ' القرم أنني % % سواك إلى خلق من الناس راغب % 39(@)(@@) % فلا تلبس النعمى وغيرك ملبس ، % ولا تقبل الدنيا وغيرك واهب % 40(@)(@@) % ولا أنا ، من كل المطاعم ، طاعم % ولا أنا ، من كل المشارب ، شارب % 41(@)(@@) % ولا أنا راض إن كثرن مكاسبي ، % إذا لم تكن بالعز تلك المكاسب % 42(@)(@@) % و لا السيد القمقام عندي بسيد % إذا استنزلته عن علاه الرغائب % PageV01P038 43(@)(@@) % أيعلم ما نلقى ؟ نعم يعلمونه % على النأي أحباب لنا وحبائب 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms9# % 44(@)(@@) % أأبقى أخي دمعا ، أذاق كرى أخي ؟ % أآب أخي بعدي ، من الصبرآئب ؟ % 46(@)(@@) % بنفسي وإن لم أرض نفسي لراكب % يسائل عني كلما لاح راكب % 48(@)(@@) % قريح مجاري الدمع مستلب الكرى % % يقلقله هم من الشوق ناصب % 49(@)(@@) % أخي لا يذقني الله فقدان مثله ! % و أين له مثل ، وأين المقارب ؟ % 50(@)(@@) % تجاوزت القربى المودة بيننا ، % فأصبح أدنى ما يعد المناسب % 51(@)(@@) % ألا ليتني حملت همي وهمه ، % وأن أخي ناء عن الهم عازب % 52(@)(@@) % فمن لم يجد بالنفس دون حبيبه % فما هو إلا ماذق الود كاذب % 53(@)(@@) % أتاني ، مع الركبان ، أنك جازع ، % وغيرك يخفى عنه لله واجب % 54(@)(@@) % وما أنت ممن يسخط الله فعله % و إن أخذت منك الخطوب السوالب % PageV01P039 55(@)(@@) % وإني لمجزاع ، خلا أن عزمة % تدافع عني حسرة وتغالب % 56(@)(@@) % و رقبة حساد صبرت لوقعها % % لها جانب مني وللحرب جانب % 57(@)(@@) % فكم من حزين مثل حزني وواله % ولكنني وحدي الحزين المراقب % 61(@)(@@) % ولست ملوما إن بكيتك من دمي % % إذا قعدت عني الدموع السواكب % 65(@)(@@) % ألا ليت شعري هل أبيتن ليلة % تناقل بي فيها إليك الركائب ؟ % PageV01P040 البحر : طويل 1(@)(@@) % أراني وقومي فرقتنا مذاهب ، % و إن جمعتنا في الأصول المناسب % 2(@)(@@) % فأقصاهم أقصاهم من مساءتي ، % وأقربهم مما كرهت الأقارب % 3(@)(@@) % غريب وأهلي حيث ما كان ناظري ، % وحيد وحولي من رجالي عصائب % 4(@)(@@) % نسيبك من ناسبت بالود قلبه % وجارك من صافيته لا المصاقب % 5(@)(@@) % و أعظم أعداء الرجال ثقاتها % % و أهون من عاديته من تحارب % 6(@)(@@) % وشر عدويك الذي لا تحارب ، % و خير خليليك الذي لا تناسب % 7(@)(@@) % لقد زدت بالأيام والناس خبرة % و جربت حتى هذبتني التجارب % 8(@)(@@) % وما الذنب إلا العجز يركبه الفتى ، % و ما ذنبه إن طارته المطالب % 9(@)(@@) % ومن كان غير السيف كافل رزقه % فللذل منه لا محالة جانب % 10(@)(@@) % وما أنس دار ليس فيها مؤانس ، % و ما قرب قوم ليس فيهم مقارب ! ؟ % PageV01P041 البحر : طويل 1(@)(@@) % أما لجميل عندكن ثواب ، % ولا لمسيء عندكن متاب ؟ % 2(@)(@@) % لقد ضل من تحوي هواه خريدة ، % و قد ذل من تقضي عليه كعاب % 3(@)(@@) % و لكنني - والحمد لله - حازم % أعز إذا ذلت لهن رقاب % 4(@)(@@) % ولا تملك الحسناء قلبي كله % و إن شملتها رقة 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms10# وشباب % 5(@)(@@) % وأجري فلا أعطي الهوى فضل مقودي ، % وأهفو ولا يخفى علي صواب % 6(@)(@@) % إذا الخل لم يهجرك إلا ملالة ، % فليس له إلا الفراق عتاب % 7(@)(@@) % إذا لم أجد من خلة ما أريده % فعندي لأخرى عزمة وركاب % 8(@)(@@) % وليس فراق ما استطعت ، فإن يكن % % فراق على حال فليس إياب % 9(@)(@@) % صبور ولو لم تبق مني بقية % قؤول ولو أن السيوف جواب % 10(@)(@@) % وقور وأحداث الزمان تنوشني ، % وفي كل يوم لفتة وخطاب % PageV01P042 11(@)(@@) % وألحظ أحوال الزمان بمقلة % بها الصدق صدق والكذاب كذاب % 12(@)(@@) % بمن يثق الإنسان فيما ينوبه % ومن أين للحر الكريم صحاب ؟ % 13(@)(@@) % وقد صار هذا الناس إلا أقلهم % ذئابا على أجسادهن ثياب % 14(@)(@@) % تغابيت عن قومي فظنوا غباوة % بمفرق أغبانا حصى وتراب % 15(@)(@@) % ولو عرفوني حق معرفتي بهم ، % إذا علموا أني شهدت وغابوا % % 16(@)(@@) % وما كل فعال يجازى بفعله ، % و لا كل قوال لدي يجاب % 17(@)(@@) % ورب كلام مر فوق مسامعي % % 18(@)(@@) % إلى الله أشكو أننا بمنازل % تحكم في آسادهن كلاب % 19(@)(@@) % تمر الليالي ليس للنفع موضع % لدي ، ولا للمعتفين جناب % 20(@)(@@) % ولا شد لي سرج على ظهر سابح ، % ولا ضربت لي بالعراء قباب % PageV01P043 21(@)(@@) % و لا برقت لي في اللقاء قواطع % ولا لمعت لي في الحروب حراب % 22(@)(@@) % ستذكر أيامي ' نمير ' و ' عامر ' % و ' كعب ' على علاتها و ' كلاب ' % 23(@)(@@) % أنا الجار لا زادي بطيء عليهم % ولا دون مالي للحوادث باب % 24(@)(@@) % ولا أطلب العوراء منهم أصيبها ، % ولا عورتي للطالبين تصاب % 25(@)(@@) % وأسطو وحبي ثابت في صدورهم % وأحلم عن جهالهم وأهاب % 26(@)(@@) % بني عمنا ما يصنع السيف في الوغى % % إذا فل منه مضرب وذباب ؟ % 27(@)(@@) % % شداد على غير الهوان صلاب % 28(@)(@@) % بني عمنا نحن السواعد والظبى % % ويوشك يوما أن يكون ضراب % 29(@)(@@) % % حريون أن يقضى لهم ويهابوا % % 30(@)(@@) % فعن أي عذر إن دعوا ودعيتم % أبيتم ، بني أعمامنا ، وأجابوا ؟ % PageV01P044 31(@)(@@) % وما أدعي ، ما يعلم الله غيره % رحاب ' علي ' للعفاة رحاب % 32(@)(@@) % و أفعاله للراغبين كريمة % و أمواله للطالبين نهاب % 33(@)(@@) % و لكن نبا منه بكفي صارم % و أظلم في عيني منه شهاب % 34(@)(@@) % وأبطأ عني ، والمنايا سريعة ، % وللموت ظفر قد أطل وناب % 35(@)(@@) % % و لا نسب بين الرجال قراب % 36(@)(@@) % فأحوط 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms11# للإسلام أن لا يضيعني % % و لي عنه فيه حوطة ومناب % 37(@)(@@) % ولكنني راض على كل حالة % ليعلم أي الحالتين سراب % 38(@)(@@) % و ما زلت أرضى بالقليل محبة % لديه وما دون الكثير حجاب % 39(@)(@@) % وأطلب إبقاء على الود أرضه ، % و ذكرى منى في غيرها وطلاب % 40(@)(@@) % كذاك الوداد المحض لا يرتجى له % ثواب ولا يخشى عليه عقاب % PageV01P045 42(@)(@@) % وقد كنت أخشى الهجر والشمل جامع % و في كل يوم لقية وخطاب % 43(@)(@@) % فكيف وفيما بيننا ملك قيصر % وللبحر حولي زخرة وعباب % 44(@)(@@) % أمن بعد بذل النفس فيما تريده % أثاب بمر العتب حين أثاب ؟ % 45(@)(@@) % فليتك تحلو ، والحياة مريرة ، % وليتك ترضى والأنام غضاب % 46(@)(@@) % وليت الذي بيني وبينك عامر % و بيني وبين العالمين خراب % PageV01P046 البحر : مجزوء الرمل 1(@)(@@) % إن في الأسر لصبا % دمعه في الخد صب % 2(@)(@@) % هو في الروم مقيم ، % وله في الشام قلب % 3(@)(@@) % مستجد لم يصادف % % عوضا ممن يحب % PageV01P047 البحر : وافر تام 1(@)(@@) % زماني كله غضب وعتب % و أنت علي والأيام إلب % 2(@)(@@) % وعيش العالمين لديك سهل ، % و عيشي وحده بفناك صعب % 3(@)(@@) % وأنت وأنت دافع كل خطب ، % مع الخطب الملم علي خطب % 4(@)(@@) % إلى كم ذا العقاب وليس جرم % و كم ذا الإعتذار وليس ذنب ؟ % 5(@)(@@) % فلا بالشام لذ بفي شرب % ولا في الأسر رق علي قلب % 6(@)(@@) % فلا تحمل على قلب جريح % به لحوادث الأيام ندب % 7(@)(@@) % أمثلي تقبل الأقوال فيه ؟ % ومثلك يستمر عليه كذب ؟ % 8(@)(@@) % جناني ما علمت ، ولي لسان % يقد الدرع والإنسان عضب % 9(@)(@@) % وزندي ، وهو زندك ، ليس يكبو % % وناري ، وهي نارك ، ليس تخبو % % 10(@)(@@) % و فرعي فرعك الزاكي المعلى % % وأصلي أصلك الزاكي وحسب % PageV01P048 11(@)(@@) % ' لإسمعيل ' بي وبنيه فخر % وفي إسحق بي وبنيه عجب % 12(@)(@@) % و أعمامي ' ربيعة ' و هي صيد % وأخوالي بلصفر وهي غلب % 13(@)(@@) % و فضلي تعجز الفضلاء عنه % لأنك أصله والمجد ترب % 14(@)(@@) % فدت نفسي الأمير ، كأن حظي % % وقربي عنده ، ما دام قرب % 15(@)(@@) % فلما حالت الأعداء دوني ، % و أصبح بيننا بحر و ' درب ' % 16(@)(@@) % ظللت تبدل الأقوال بعدي % % و يبلغني اغتيابك ما يغب % 17(@)(@@) % فقل ما شئت في فلي لسان % مليء بالثناء عليك رطب % 18(@)(@@) % و عاملني بإنصاف وظلم % تجدني في الجميع 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms12# كما تحب % PageV01P049 البحر : طويل 1(@)(@@) % لقد علمت قيس بن عيلان أننا % % بنا يدرك الثأر الذي قل طالبه % 2(@)(@@) % وأنا نزعنا الملك من عقر داره % و ننتهك القرم الممنع جانبه % 3(@)(@@) % وأنا فتكنا بالأغر ابن رائق % عشية دبت بالفساد عقاربه % % 4(@)(@@) % أخذنا لكم بالثار ثار عمارة ، % و قد نام لم ينهد إلى الثأر صاحبه % PageV01P050 البحر : رجز تام 1(@)(@@) % و زائر حببه إغبابه % طال على رغم السرى اجتنابه % 2(@)(@@) % وافاه دهر عصل أنيابه % واجتاب بطنان العجاج جابه % 3(@)(@@) % يدأب ما رد الزمان دابه % وأرفدت خيراته ورابه % 4(@)(@@) % وافى أمام هطله ربابه % باك حزين ، رعده انتحابه % 5(@)(@@) % جاءت به ، مسيلة أهدابه ، % رائحة هبوبها هبابه % 6(@)(@@) % ذيالة ذلت لها صعابه % ركب حيا كان الصبا ركابه % 7(@)(@@) % حتى إذا ما اتصلت أسبابه % وضربت على الثرى عقابه % 8(@)(@@) % و ضربت على الربا قبابه % وامتد في أرجائه أطنابه % 9(@)(@@) % وتبع انسجامه انسكابه % وردف اصطفاقه اضطرابه % 10(@)(@@) % كأنما قد حملت سحابه % ركن شروري واصطفت هضابه % PageV01P051 11(@)(@@) % جلى على وجه الثرى كتابه % وشرقت بمائها شعابه % 12(@)(@@) % و حليت بنورها رحابه % كأنه لما انجلى منجابه % 13(@)(@@) % و لم يؤمن فقده إيابه % شيخ كبير عاده شبابه % PageV01P052 البحر : طويل 1(@)(@@) % و لا تصفن الحرب عندي فإنها % % طعامي مذ بعت الصبا وشرابي % % 2(@)(@@) % و قد عرفت وقع المسامير مهجتي % % و شقق عن زرق النصول إهابي % % 3(@)(@@) % ولججت في حلو الزمان ومره ، % وأنفقت من عمري بغير حساب % PageV01P053 البحر : سريع 1(@)(@@) % من لي بكتمان هوى شادن % عيني له عون على قلبي ؟ % 2(@)(@@) % عرضت صبري وسلوى له % فاستشهدا في طاعة الحب % PageV01P054 البحر : طويل 1(@)(@@) % لبسنا رداء الليل ، والليل راضع % إلى أن تردى رأسه بمشيب % 2(@)(@@) % و بتنا كغصني بانة عابثتهما % % إلى الصبح ريحا شمأل وجنوب % 3(@)(@@) % بحال ترد الحاسدين بغيظهم % و تطرف عنا عين كل رقيب % 4(@)(@@) % إلى أن بدا ضوء الصباح كأنه % مبادي نصول في عذار خضيب % 5(@)(@@) % فيا ليل قد فارقت غير مذمم ، % و يا صبح قد أقبلت غير حبيب % PageV01P055 البحر : مجزوء الوافر 1(@)(@@) % ولما أن جعلت الل % ه لي سترا من النوب % 2(@)(@@) % رمتني كل حادثة % فأخطتني ولم تصب % PageV01P056 البحر : وافر تام 1(@)(@@) % مسيء محسن طورا وطورا ، % فما أدري عدوي أم حبيبي % % 2(@)(@@) % يقلب 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms13# مقلة ، ويدير طرفا ، % به عرف البريء من المريب % 3(@)(@@) % وبعض الظالمين ، وإن تناهى ، % شهي الظلم ، مغتفر الذنوب % PageV01P057 البحر : طويل 1(@)(@@) % ندبت لحسن الصبر قلب نجيب % و ناديت للتسليم خير مجيب % 2(@)(@@) % ولم يبق مني غير قلب مشيع % و عود على ناب الزمان صليب % 3(@)(@@) % و قد علمت أمي بأن منيتي % % بحد سنان أو بحد قضيب % 4(@)(@@) % كما علمت ؛ من قبل أن يغرق آبنها ، % بمهلكه في الماء ، أم شبيب % 7(@)(@@) % تحملت ، خوف العار ، أعظم خطة % وأملت نصرا كان غير قريب % 8(@)(@@) % وللعار خلى رب غسان ملكه % وفارق دين الله غير مصيب % 9(@)(@@) % ولم يرتغب في العيش ' عيسى بن مصعب ' % ولا خف خوف الحرب قلب حبيب % 10(@)(@@) % رضيت لنفسي : ' كان غير موفق ' % ولم ترض نفسي : كان غير نحيب % PageV01P058 البحر : سريع 1(@)(@@) % يا عيد ! ما عدت بمحبوب % على معنى القلب ، مكروب % 2(@)(@@) % يا عيد ! قد عدت على ناظر ، % عن كل حسن فيك ، محجوب % 3(@)(@@) % يا وحشة الدار التي ربها % % أصبح في أثواب مربوب % 4(@)(@@) % قد طلع العيد على أهله % بوجه لا حسن ولا طيب % 5(@)(@@) % ما لي وللدهر وأحداثه % لقد رماني بالأعاجيب % PageV01P059 البحر : وافر تام 1(@)(@@) % رددت على بني قطن بسيفي % % أسيرا غير مرجو الإياب % 2(@)(@@) % سررت بفكه حيي نمير ، % وسؤت بني ' ربيعة ' و ' الضباب ' % 3(@)(@@) % و ما أبغي سوى شكري ثوابا % و إن الشكر من خير الثواب % 4(@)(@@) % فهل مثن علي فتى نمير % بحلي عنه قد بني ' كلاب ' % PageV01P060 البحر : بسيط تام 1(@)(@@) % وعلة لم تدع قلبا بلا ألم % سرت إلى طلب العليا وغاربها % % 2(@)(@@) % هل تقبل النفس عن نفس فأفديه ؟ % الله يعلم ما تغلو علي بها % % 3(@)(@@) % لئن وهبتك نفسا لا نظير لها % % فما سمحت بها إلا لواهبها % % PageV01P061 البحر : كامل تام 1(@)(@@) % فعل الجميل ولم يكن من قصده % فقبلته وقرنته بذنوبه % 2(@)(@@) % و لرب فعل جاءني من فاعل % أحمدته وذممت من يأتي به % PageV01P062 البحر : متقارب تام 1(@)(@@) % فديتك ، ما الغدر من شيمتي % % قديما ولا الهجر من مذهبي ! % 2(@)(@@) % وهبني ؛ كما تدعي ؛ مذنبا ! % أما تقبل العذر من مذنب ؟ % 3(@)(@@) % وأولى الرجال ، بعتب ، أخ % يكر العتاب على معتب % PageV01P063 البحر : سريع 1(@)(@@) % ألزمني ذنبا بلا ذنب % ولج في الهجران والعتب % 2(@)(@@) % أحاول الصبر 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms14# على هجره % والصبر محظور على الصب % 3(@)(@@) % وأكتم الوجد ، وقد أصبحت % عيناي عينين على القلب % 4(@)(@@) % قد كنت ذا صبر وذا سلوة % فاستشهدا في طاعة الحب % PageV01P064 البحر : سريع 1(@)(@@) % ياليل ؛ ما أغفل ، عما بي ، % حبائبي فيك وأحبابي % % 2(@)(@@) % يا ليل ، نام الناس عن موضع % ناء ، على مضجعه نابي % % 3(@)(@@) % هبت له ريح شامية % متت إلى القلب بأسباب % 4(@)(@@) % أدت رسالات حبيب لنا % % فهمتها من بين أصحابي % % PageV01P065 البحر : مجزوء الكامل 1(@)(@@) % أبنيتي ، لا تحزني % % كل الأنام إلى ذهاب % 2(@)(@@) % أبنيتي ، صبرا جمي % % لا للجليل من المصاب ! % 3(@)(@@) % نوحي علي بحسرة ! % من خلف سترك والحجاب % 4(@)(@@) % قولي إذا ناديتني ، % و عييت عن رد الجواب : % 5(@)(@@) % زين الشباب ، ' أبو فرا % % س ، لم يمتع بالشباب ! % PageV01P066 البحر : خفيف تام 1(@)(@@) % وقفتني على الأسى والنحيب % مقلتا ذلك الغزال الربيب % % 2(@)(@@) % كلما عادني السلو ؛ رماني % % غنج ألحاظه بسهم مصيب % 3(@)(@@) % فاترات قواتل ، فاتنات ، % فاتكات سهامها في القلوب % 4(@)(@@) % هل لصب متيم من معين ؟ % و لداء مخامر من طبيب ؟ % 5(@)(@@) % أيها المذنب المعاتب حتى % % خلت أن الذنوب كانت ذنوبي % % 6(@)(@@) % كن كما شئت من وصال وهجر % غير قلبي عليك غير كئيب % 7(@)(@@) % لك جسم الهوى ، وثغر الأقاحي ، % و نسيم الصبا ، وقد القضيب % 8(@)(@@) % قد جحدت الهوى ولكن أقرت % سيمياء الهوى ولحظ المريب % 9(@)(@@) % أنا في حالتي وصال وهجر % من جوى الحب في عذاب مذيب % 10(@)(@@) % بين قرب منغص بصدود % ووصال منغص برقيب % PageV01P067 11(@)(@@) % يا خليلي ، خلياني ودمعي % % إن في الدمع راحة المكروب % 12(@)(@@) % ما تقولان في جهاد محب % وقف القلب في سبيل الحبيب ؟ % 13(@)(@@) % هل من الظاعنين مهد سلامي % % للفتى الماجد الأريب الأديب ؟ % 14(@)(@@) % ابن عمي الداني على شحط دار % والقريب المحل غير قريب % 15(@)(@@) % خالص الود ، صادق الوعد ، أنسي % % في حضوري محافظ في مغيبي % % 16(@)(@@) % كل يوم يهدي إلي رياضا % جادها فكره بغيث سكوب % 17(@)(@@) % واردات بكل أنس وبر % وافدات بكل حسن وطيب % 18(@)(@@) % ' يابن نصر ' وقيت بؤس الليالي % % و صروف الردى ، وكرب الخطوب % 19(@)(@@) % بان صبري لما تأمل طرفي : % بان صبري ببين ظبي ربيب % PageV01P068 البحر : بسيط تام 1(@)(@@) % يا ضارب الجيش بي في وسط مفرقه % لقد ضربت بنفس الصارم الغضب % 2(@)(@@) % لا تحرز الدرع عني نفس صاحبها % % ولا 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms15# أجير ذمام البيض واليلب % 3(@)(@@) % و لا أعود برمحي غير منحطم % و لا أروح بسيفي غير مختضب % 4(@)(@@) % حتى تقول لك الأعداء راغمة % ' أضحى ابن عمك هذا فارس العرب ' % 5(@)(@@) % هيهات لا أجحد النعماء منعمها % % خلفت ' يابن أبي الهيجاء ' في أبي ؟ % 6(@)(@@) % يا من يحاذر أن تمضي علي يد % ما لي أراك لبيض الهند تسمح بي ؟ % 7(@)(@@) % و أنت بي من أضن الناس كلهم % فكيف تبذلني للسمر والقضب ؟ % 8(@)(@@) % ما زلت أجهله فضلا وأنكره % % نعمى ، وأوسع من عجب ومن عجب % 9(@)(@@) % حتى رأيتك بين الناس مجتنبا % تثني علي بوجه غير متئب % 10(@)(@@) % فعندها ، وعيون الناس ترمقني % % علمت أنك لم تخطىء ولم أصب % PageV01P069 البحر : كامل تام 1(@)(@@) % ومعود للكر في حمس الوغى ، % غادرته ؛ والفر من عاداته % 2(@)(@@) % حمل القناة على أغر سميذع ، % دخال ما بين الفتى وقناته % 3(@)(@@) % لا أطلب الرزق الذليل مناله % فوت الهوان أذل من مقناته % 4(@)(@@) % علقت بنات الدهر ، تطرق ساحتي % % لما فضلت بنيه في حالاته % 5(@)(@@) % فالحرب ترميني ببيض رجالها % % والدهر يطرقني بسود بناته % PageV01P070 البحر : طويل 1(@)(@@) % و ما هو إلا أن جرت بفراقنا % % يد الدهر حتى قيل ، من هو حارث ؟ % 2(@)(@@) % يذكرنا بعد الفراق عهوده ، % وتلك عهود قد بلين رثائث % PageV01P071 البحر : طويل 1(@)(@@) % ألا ليت قومي ، والأماني مثيرة ، % شهودي ، والأرواح غير لوابث % 2(@)(@@) % غداة تناديني الفوارس ؛ والقنا % % ترد إلى حد الظبا كل ناكث % 3(@)(@@) % ' أحارث ' إن لم تصدر الرمح قانيا % و لم تدفع الجلى فلست ' بحارث ' % PageV01P072 البحر : مجزوء الرجز 1(@)(@@) % قامت إلى جارتها % % تشكو ، بذل وشجا % % 2(@)(@@) % أما ترين ، ذا الفتى ؟ % مر بنا ما عرجا % % 3(@)(@@) % إن كان ما ذاق الهوى ، % فلا نجوت ، إن نجا % % PageV01P073 البحر : سريع 1(@)(@@) % جارية ، كحلاء ، ممشوقة ، % في صدرها : حقان من عاج % 2(@)(@@) % شجا فؤادي طرفها الساجي ، % وكل ساج طرفه شاج % PageV01P074 البحر : وافر تام 1(@)(@@) % ألا أبلغ سراة ' بني كلاب ' % إذا ندبت نوادبهم صباحا % % 2(@)(@@) % جزيت سفيههم سوءءا بسوء % فلا حرجا أتيت ولا جناحا % % 3(@)(@@) % قتلت فتى بني عمرو بن عبد % وأوسعهم على الضيفان ساحا % % 4(@)(@@) % قتلت معودا علل العشايا ، % تخيرت العبيد له اللقاحا % % 5(@)(@@) % ولست أرى فسادا في فساد % يجر على طريقته صلاحا % % PageV01P075 البحر : وافر تام 1(@)(@@) % عجبت ، وقد لقيت 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms16# بني ' كلاب ' % و أرواح الفوارس تستباح % 2(@)(@@) % و كيف رددت غرب الجيش عنهم % وقد أخذت مآخذها الرماح % PageV01P076 البحر : كامل تام 1(@)(@@) % أ ' أبا العشائر ' لا محلك دارس % بين الضلوع ، ولا مكانك نازح % 2(@)(@@) % إني لأعلم بعد موتك أنه % ما مر للأسراء يوم صالح % PageV01P077 البحر : بسيط تام 1(@)(@@) % وقد أروح ، قرير العين ، مغتبطا % بصاحب مثل نصل السيف وضاح % 2(@)(@@) % عذب الخلائق ، محمود طرائقه ، % عف المسامع ، حتى يرغم اللاحي % % 3(@)(@@) % لما رأى لحظاتي في عوارضه ، % فيما أشاءمن الريحان والراح % 4(@)(@@) % لاث اللثام على وجه أسرته % كأنها قمر أو ضوء مصباح % PageV01P078 البحر : وافر تام 1(@)(@@) % عدتني عن زيارتكم عواد % أقل مخوفها سمر الرماح % 2(@)(@@) % وإن لقاءها ليهون عندي ، % إذا كان الوصول إلى نجاح % 3(@)(@@) % ولكن بيننا بين وهجر % أأرجو بعد ذلك من صلاح ؟ % 4(@)(@@) % أقمت ، ولو أطعت رسيس شوقي % % ركبت إليك أعناق الرياح % PageV01P079 البحر : وافر تام 1(@)(@@) % تبسم ، إذ تبسم ، عن أقاح % وأسفر ، حين أسفر ، عن صباح % 2(@)(@@) % وأتحفني بكأس من رضاب ، % و كأس من جنى خد وراح % 3(@)(@@) % فمن لألاء غرته صباحي % % ومن صهباء ريقته اصطباحي % % 6(@)(@@) % فلا تعجل إلى تسريح روحي % % فموتي فيك أيسر من سراحي % % PageV01P080 البحر : وافر تام 1(@)(@@) % أغص بذكره ، أبدا ، بريقي % % و أشرق منه بالماء القراح % 2(@)(@@) % و تمنعني مراقبة الأعادي % % غدوي للزيارة أو رواحي % % 3(@)(@@) % ولو أني أملك فيه أمري % % ركبت إليه أعناق الرياح % PageV01P081 البحر : خفيف تام 1(@)(@@) % لم أؤاخذك بالجفاء ، لأني ، % واثق منك بالوفاء الصحيح % 2(@)(@@) % فجميل العدو غير جميل ، % و قبيح الصديق غير قبيح % PageV01P082 البحر : وافر تام 1(@)(@@) % علونا ' جوشنا ' بأشد منه ، % وأثبت عند مشتجر الرماح % 2(@)(@@) % بجيش جاش ، بالفرسان ، حتى % % ظننت ، البر بحرا من سلاح % 3(@)(@@) % و ألسنة من العذبات حمر % تخاطبنا بأفواه الرماح % 5(@)(@@) % و أروع ، جيشه ليل بهيم ، % و غرته عمود من صباح % 6(@)(@@) % صفوح عند قدرته كريم % قليل الصفح ما بين الصفاح % 7(@)(@@) % فكان ثباته للقلب قلبا % وهيبته جناحا للجناح % PageV01P083 البحر : مجزوء الرمل 1(@)(@@) % أقبلت كالبدر تسعى ، % غلسا ، نحوي ، براح % 2(@)(@@) % قلت : أهلا بفتاة ، % حملت نور الصباح % 3(@)(@@) % عللي بالكأس من أص % بح منها غير صاح % PageV01P084 البحر : وافر تام 1(@)(@@) % أيلحاني ، على العبرات ، لاح % وقد يئس العواذل من صلاحي % % 2(@)(@@) % تملكني الهوى 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms17# بعد التأبي ، % وروضني الهوى بعد الجماح % 3(@)(@@) % أسكرى اللحظ طيبة الثنايا % % أفترى اللحظ ، جائلة الوشاح % 4(@)(@@) % رمتني نحو دارك كل عنس % وصلت لها غدوي بالرواح % 5(@)(@@) % تطاول فضل نسعتها ، وقلت % فضول زمامها ، عند المراح % 6(@)(@@) % حملن إليك صبا ذا ارتياح % بقربك ، أو مساعد ذي ارتياح % 7(@)(@@) % أخا عشرين ، شيب عارضيه % مريض اللحظ في الحدق الصحاح % 8(@)(@@) % نزحن من الرصافة عامدات % أخف الفارسين إلى الصياح % 9(@)(@@) % إذا ما عن لي أرب بأرض ، % ركبت له ، ضمينات النجاح % 10(@)(@@) % و لي عند العداة ، بكل أرض ، % ديون في كفالات الرماح % PageV01P085 11(@)(@@) % إذا التفت علي سراة قومي % % ولاقينا الفوارس في الصباح % 12(@)(@@) % يخف بها إلى الغمرات طود % بنات السبق تحت بني الكفاح % 13(@)(@@) % تكدر نقعه ، والجو صاف ، % و أظلم وقته ، واليوم صاح % 14(@)(@@) % و كل معذل في الحي آب % على العذال ؛ عصاء اللواحي % % PageV01P086 البحر : وافر تام 1(@)(@@) % ديون في كفالات الرماح % وأكباد مكلمة النواحي % % 2(@)(@@) % و حزن ، لا نفاذ له ؛ ودمع % يلاحي ، في الصبابة ، كل لاح % 3(@)(@@) % أتدري ما أروح به وأغدو ، % فتاة الحي حي بني رباح ؟ % 4(@)(@@) % ألا يا هذه ، هل من مقيل % لضيفان الصبابة ، أو رواح ؟ % 5(@)(@@) % فلولا أنت ، ما قلقت ركابي % % فتاة الحي حي بني رباح ؟ % 6(@)(@@) % و من جراك ، أوطنت الفيافي % % وفيك غذيت ألبان اللقاح % 7(@)(@@) % رمتك من الشآم بنا مطايا % % قصار الخطو ، دامية الصفاح % 8(@)(@@) % تجول نسوعها ، وتبيت تسري % % إلى غراء ، جائلة الوشاح % 9(@)(@@) % إذا لم تشف ، بالغدوات ، نفسي % % ولا هبت إلى نجد رياحي ! % 10(@)(@@) % يلاحي ، في الصبابة ، كل لاح % وقد هبت لنا ريح الصباح : % PageV01P087 11(@)(@@) % لقد أخذ السرى والليل منا ، % فهل لك أن تريح بجو راح ؟ % 12(@)(@@) % فقلت لهم على كره : أريحوا % % ولا هبت إلى نجد رياحي ! % 13(@)(@@) % إرادة أن يقال أبو فراس ، % على الأصحاب ، مأمون الجماح % 14(@)(@@) % و كم أمر أغالب فيه نفسي % % ركبت ، مكان أدنى للنجاح % 15(@)(@@) % يلاحي ، في الصبابة ، كل لاح % وآسو كل خل بالسماح % 16(@)(@@) % وإنا غير أثام لنحوي % % جمام الماء ، والمرعى المباح % 17(@)(@@) % وإنا غير أثام لنحوي % % منيع الدار ، والمال المراح % 18(@)(@@) % لأملاك البلاد ، علي ، طعن % يحل عزيمة الدرع الوقاح % 19(@)(@@) % و يوم ، للكماة به اعتناق ، % و لكن التصافح بالصفاح % 20(@)(@@) % و ما للمال يروي عن 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms18# ذويه % ويصبح في الرعاديد الشحاح % PageV01P088 21(@)(@@) % لنا منه ، وإن لويت قليلا ، % % 22(@)(@@) % وحزن ، لا نفاد له ، ودمع % أتدري ما أروح به وأغدو ، % 23(@)(@@) % تراه ، إذا الكماة الغلب شدوا % % أشد الفارسين إلى الكفاح % 24(@)(@@) % أتاني من بني ورقاء قول % ألذ جنى من الماء القراح % 25(@)(@@) % و أطيب من نسيم الروض حفت % به اللذات من روح وراح % 26(@)(@@) % وتبكي في نواحيه الغوادي % % بأدمعها ، وتبسم عن أقاح % 27(@)(@@) % عتابك يابن عم بغير جرم % وإنا غير بخال لنحمي % % 28(@)(@@) % و ما أرضى انتصافا من سواكم % وأغضي منك عن ظلم صراح % 29(@)(@@) % أظنا ؟ إن بعض الظن إثم ! % أمزحا ؟ رب جد في مزاح ! % 30(@)(@@) % إذا لم يثن غرب الظن ظن % بسطت العذر في الهجر المباح % PageV01P089 31(@)(@@) % أأترك في رضاك مديح قومي % % أصاحب كل خل بالتجافي % % 32(@)(@@) % و هم أصل لهذا الفرع طابت % وكم أمر أغالب فيه نفسي % % 33(@)(@@) % بقاء البيض عمر الشمل فيهم % % و حط السيف أعمار اللقاح % 34(@)(@@) % أعز العالمين حمى وجارا ، % وأكرم مستغاث مستماح % 35(@)(@@) % أريتك يابن عم بأي عذر ؟ % عدوت عن الصواب ؛ وأنت لاح % 36(@)(@@) % وإنا غير بخال لنحمي % % كفعلك ؛ أم بأسرتنا افتتاحي % % 37(@)(@@) % وهل في نظم شعري من طريف % لمغدى في مكانك ؛ أو مراح ؟ % 38(@)(@@) % أمن كعب نشا بحر العطايا % % 39(@)(@@) % و صاحب كل خل مستبيح % وتبكي في نواحيه الغوادي % % 40(@)(@@) % و هذا السيل من تلك الغوادي % % و هذي السحب من تلك الرياح % PageV01P090 41(@)(@@) % وآسو كل خل بالسماح % أفي مدحي لقومي من جناح ؟ % 42(@)(@@) % يلاحي ، في الصبابة ، كل لاح % و من أضحى امتداحهم امتداحي ؟ % 43(@)(@@) % و لست ، وإن صبرت على الرزايا % % ألا حي أسرتي ، وبهم ألاحي % % 44(@)(@@) % و لو أني اقترحت على زماني % % لكنتم ، يا ' بني ورقا ' اقتراحي % % PageV01P091 البحر : طويل 1(@)(@@) % تمنيتم أن تفقدوني ، وإنما % % تمنيتم أن تفقدوا العز أصيدا % % 2(@)(@@) % أما أنا أعلى من تعدون همة ؟ % وإن كنت أدنى من تعدون مولدا % % 3(@)(@@) % إلى الله أشكو عصبة من عشيرتي % % يسيئون لي في القول ، غيبا ومشهدا % % 4(@)(@@) % و إن حاربوا كنت المجن أمامهم % % وإن ضاربوا كنت المهند واليدا % % 5(@)(@@) % و إن ناب خطب ، أو ألمت ملمة ، % جعلت لهم نفسي ، وما ملكت فدا % % 6(@)(@@) % يودون أن لا يبصروني ، سفاهة ، % ولو غبت عن أمر 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms19# تركتهم سدى % % 7(@)(@@) % فعالي لهم ، لو أنصفوا في جمالها % % وحظ لنفسي اليوم وهو لهم غدا % % 8(@)(@@) % فلا تعدوني نعمة ، فمتى غدت % فأهلي بها أولى وإن أصبحوا عدا % % PageV01P092 البحر : بسيط تام 1(@)(@@) % يا طول شوقي إن قالوا : الرحيل غدا ، % لا فرق الله فيما بيننا أبدا % % 2(@)(@@) % يا من أصافيه في قرب وفي بعد % ومن أخالصه إن غاب أو شهدا % % 3(@)(@@) % راع الفراق فؤادا كنت تؤنسه % وذر بين الجفون الدمع والسهدا % % 4(@)(@@) % لا يبعد الله شخصا لا أرى أنسا % ولا تطيب لي الدنيا إذا بعدا % % 5(@)(@@) % أضحى وأضحيت في سر وفي علن % أعده والدا إذ عدني ولدا % % 6(@)(@@) % ما زال ينظم في الشعر مجتهدا % فضلا وأنظم فيه الشعر مجتهدا % % 7(@)(@@) % حتى اعترفت وعزتني فضائله ، % و فات سبقا وحاز الفضل منفردا % % 8(@)(@@) % إن قصر الجهد عن إدراك غايته % % فأعذر الناس من أعطاك ما وجدا % % 9(@)(@@) % أبقى لنا الله مولانا ؛ ولا برحت % أيامنا ، أبدا ، في ظله جددا % % 10(@)(@@) % لا يطرق النازل المحذور ساحته % ولا تمد إليه الحادثات يدا % % PageV01P093 11(@)(@@) % الحمد لله حمدا دائما أبدا % % أعطاني الدهر ما لم يعطه أحدا % % PageV01P094 البحر : كامل تام 1(@)(@@) % أهدى إلي صبابة وكآبة % فأعادني كلف الفؤاد عميدا % % 2(@)(@@) % إن الغزالة والغزالة أهدتا % % وجها إليك ، إذا طلعت ، وجيدا % % PageV01P095 البحر : طويل 1(@)(@@) % إلى الله أشكو ما أرى من عشائر % إذا ما دنونا زاد جاهلهم بعدا % % 2(@)(@@) % وإنا لتثنينا عواطف حلمنا % % عليهم ، وإن ساءت طرائقهم جدا % % 3(@)(@@) % ويمنعنا ظلم العشيرة أننا % % إلى ضرها ، لو نبتغي ضرها ، أهدى % % 4(@)(@@) % وإنا إذا شئنا بعاد قبيلة % جعلنا عجالا دون أهلهم نجدا % % 5(@)(@@) % ولو عرفت هذي العشائر رشدها % % إذا جعلتنا دون أعدائها سدا % % 6(@)(@@) % ولكن أراها ، أصلح الله حالها % % و أخلقها بالرشد - قد عدمت رشدا % % 7(@)(@@) % إلى كم نرد البيض عنهم صواديا % ونثني صدور الخيل قد ملئت حقدا % % 8(@)(@@) % ونغلب بالحلم الحمية منهم % ونرعى رجالا ليس نرعى لهم عهدا % % 9(@)(@@) % أخاف على نفسي وللحرب سورة % بوادر أمر لا نطيق لها ردا % % 10(@)(@@) % و جولة حرب يهلك الحلم دونها % % وصولة بأس تجمع الحر والعبدا % % PageV01P096 11(@)(@@) % وإنا لنرمي الجهل بالجهل مرة % إذا لم نجد منه على حالة بدا % % PageV01P097 البحر : مجزوء الكامل 1(@)(@@) % يا معجبا بنجومه 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms20# % لا النحس منك ولا السعاده % % 2(@)(@@) % الله ينقص ما يشا % % ء وفي يد الله الزيادة % % 3(@)(@@) % دع ما أريد وما تري % % د ، فإن لله الإرادة % % PageV01P098 البحر : طويل 1(@)(@@) % دعوناك ، والهجران دونك ؛ دعوة % أتاك بها بقظان فكرك لا البرد ؟ % 2(@)(@@) % فأصبحت ما بين العدو وبيننا % % تجاري بك الخيل المسومة الجرد % 3(@)(@@) % أتيناك ، أدنى ما نجيبك ، جهدنا ، % فأهون سير الخيل من تحتنا الشد % 4(@)(@@) % بكل ، نزاري أتتك بشخصه % عوائد من حاليك ليس لها رد % 5(@)(@@) % نباعدهم وقتا كما يبعد العدا % % ونكرمهم وقتا كما يكرم الوفد % 6(@)(@@) % وندنو دنوا لا يولد جرأة % و نجفو جفاء لا يولده زهد % 7(@)(@@) % أفضت عليه الجود من قبل هذه % و أفضل منه ما يؤمله بعد % 8(@)(@@) % وحمر سيوف لا تجف لها ظبى % بأيدي رجال لا يحط لها لبد % 9(@)(@@) % و زرق تشق البرد عن منهج العدا % % و تسكن منهم أينما سكن الحقد % 10(@)(@@) % ومصطحبات قارب الركض بينها % % ولكن بها عن غيرها أبدا بعد % PageV01P099 11(@)(@@) % نشردهم ضربا كما شرد القطا % % و ننظمهم طعنا كما نظم العقد % 12(@)(@@) % لئن خانك المقدور فيما نويته % فما خانك الركض المواصل والجهد % 13(@)(@@) % تعاد كما عودت ، والهام صخرها ، % ويبنى بها المجد المؤثل والحمد % 14(@)(@@) % ففي كفك الدنيا وشيمتك العلا % % وطائرك الأعلى وكوكبك السعد % PageV01P100 البحر : طويل 1(@)(@@) % أيا عاتبا ، لا أحمل ، الدهر ، عتبه % علي ولا عندي لأنعمه جحد % 2(@)(@@) % سأسكت إجلالا لعلمك أنني % % إذا لم تكن خصمي لي الحجج اللد % PageV01P101 البحر : مجزوء الرمل 1(@)(@@) % نبوة الإدلال ليست ، % عندنا ، ذنبا يعد % 2(@)(@@) % قل لمن ليس له عه % د ، لنا عهد وعقد % 3(@)(@@) % جملة تغني عن التف % صيل : ' مالي عنك بد ' % 4(@)(@@) % إن تغيرت فما غي % ر منا لك عهد % PageV01P102 البحر : طويل 1(@)(@@) % عطفت على عمرو بن تغلب بعدما % % تعرض مني جانب لهم صلد % 2(@)(@@) % ولا خير في هجر العشيرة لامريء % يروح على ذم العشيرة أو يغدو % % 3(@)(@@) % ولكن دنو لا يولد هجرة ، % وهجر رفيق لا يصاحبه زهد % 4(@)(@@) % نباعدهم طورا ؛ كما يبعد العدا ؛ % ونكرمهم طورا كما يكرم الوفد % PageV01P103 البحر : طويل 1(@)(@@) % لقد كنت أشكو البعد منك وبيننا % % بلاد إذا ما شئت قربها الوخد % 2(@)(@@) % فكيف وفيما بيننا ملك ' قيصر ' % ولا أمل يحيي النفوس 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms21# ولا وعد ! % PageV01P104 البحر : مجزوء الكامل 1(@)(@@) % هل للفصاحة ، والسما % % حة والعلى عني محيد % 2(@)(@@) % إذ أنت سيدي الذي % % ربيتني وأبي سعيد % 3(@)(@@) % في كل يوم أستفي % % د من العلاء ، وأستزيد % 4(@)(@@) % ويزيد في إذا رأي % تك في الندى خلق جديد % PageV01P105 البحر : طويل 1(@)(@@) % دعوتك للجفن القريح المسهد % لدي ، وللنوم القليل المشرد % 2(@)(@@) % وما ذاك بخلا بالحياة ، وإنها % % لأول مبذول لأول مجتد % 3(@)(@@) % وما الأسر مما ضقت ذرعا بحمله % و ما الخطب مما أن أقول له : قد % 4(@)(@@) % وما زل عني أن شخصا معرضا % لنبل العدى ؛ إن لم يصب ؛ فكأن قد % 6(@)(@@) % ولكنني أختار موت بني أبي % % على صهوات الخيل ، غير موسد % 7(@)(@@) % وتأبى وآبى أن أموت موسدا % بأيدي النصارى موت أكمد أكبد % 8(@)(@@) % نضوت على الأيام ثوب جلادتي ؛ % ولكنني لم أنض ثوب التجلد % 9(@)(@@) % و ما أنا إلا بين أمر ، وضده % يجدد لي ، في كل يوم مجدد % 10(@)(@@) % فمن حسن صبر بالسلامة واعدي ، % ومن ريب دهر بالردى ، متوعدي % % 11(@)(@@) % أقلب طرفي بين خل مكبل % وبين صفي بالحدد مصفد % PageV01P106 12(@)(@@) % دعوتك ، والأبواب ترتج دوننا ، % فكن خير مدعو وأكرم منجد % 13(@)(@@) % فمثلك من يدعى لكل عظيمة % و مثلي من يفدى بكل مسود % 14(@)(@@) % أناديك لا أني أخاف من الردى % % و لا أرتجي تأخير يوم إلى غد % 15(@)(@@) % وقد حطم الخطي واخترم العدى % % و فلل حد المشرفي المهند % 16(@)(@@) % و لكن أنفت الموت في دارغربة ، % بأيدي النصارى الغلف ميتة أكمد % 17(@)(@@) % فلا تترك الأعداء حولي ليفرحوا % % ولا تقطع التسآل عني ، وتقعد % 18(@)(@@) % ولا تقعدن ، عني ، وقد سيم فديتي ، % فلست عن الفعل الكريم بمقعد % 19(@)(@@) % فكم لك عندي من أياد وأنعم ؟ % رفعت بها قدري وأكثرت حسدي % % 20(@)(@@) % تشبث بها أكرومة قبل فوتها ، % وقم في خلاصي صادق العزم واقعد % 21(@)(@@) % فإن مت بعد اليوم عابك مهلكي % % معاب الزراريين ، مهلك معبد % PageV01P107 22(@)(@@) % هم عضلوا عنه الفداء فأصبحوا % % يهدون أطراف القريض المقصد % 23(@)(@@) % و لم يك بدعا هلكه ؛ غير أنهم % يعابون إذ سيم الفداء وما فدي % % 24(@)(@@) % فلا كان كلب الروم أرأف منكم % وأرغب في كسب الثناء المخلد % 25(@)(@@) % و لا يبلغ الأعداء أن يتناهضوا % % وتقعد عن هذا العلاء المشيد % 26(@)(@@) % أأضحوا على أسراهم بي عودا 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms22# ، % وأنتم على أسراكم غير عود ؟ ! % 27(@)(@@) % متى تخلف الأيام مثلي لكم فتى % طويل نجاد السيف رحب المقلد ؟ % 28(@)(@@) % متى تلد الأيام مثلي لكم فتى % شديدا على البأساء ، غير ملهد ؟ % 29(@)(@@) % فإن تفتدوني تفتدوا شرف العلا ، % و أسرع عواد إليها ، معود % 30(@)(@@) % وإن تفتدوني تفتدوا لعلاكم % فتى غير مردود اللسان أو اليد % 31(@)(@@) % يطاعن عن أعراضكم ؛ بلسانه % ويضرب عنكم بالحسام المهند % PageV01P108 33(@)(@@) % فما كل من شاء المعالي ينالها ، % و لا كل سيار إلى المجد يهتدي % % 34(@)(@@) % أقلني ! أقلني عثرة الدهر إنه % رماني بسهم ، صائب النصل ، مقصد % 35(@)(@@) % ولو لم تنل نفسي ولاءك لم أكن % لأوردها ، في نصره ، كل مورد % 36(@)(@@) % ولا كنت ألقى الألف زرقا عيونها % % بسبعين فيهم كل أشأم أنكد % 37(@)(@@) % فلا ، وأبي ، ما ساعدان كساعد ، % ولا وأبي ، ما سيدان كسيد % 38(@)(@@) % ولا وأبي ، ما يفتق الدهر جانبا % فيرتقه ، إلا بأمر مسدد % 39(@)(@@) % و إنك للمولى ، الذي بك أقتدي ، % و إنك للنجم الذي بك أهتدي % % 40(@)(@@) % وأنت الذي عرفتني طرق العلا ، % وأنت الذي أهديتني كل مقصد % 41(@)(@@) % وأنت الذي بلغتني كل رتبة ، % مشيت إليها فوق أعناق حسدي % % 42(@)(@@) % فيا ملبسي النعمى التي جل قدرها % % لقد أخلقت تلك الثياب فجدد % PageV01P109 43(@)(@@) % ألم تر أني ، فيك صافحت حدها % % وفيك شربت الموت غير مصرد % 44(@)(@@) % يقولون : جنب عادة ما عرفتها ، % شديد على الإنسان ما لم يعود % 45(@)(@@) % فقلت : أما والله لا قال قائل : % شهدت له في الحرب ألأم مشهد % 46(@)(@@) % ولكن سألقاها ، فإما منية % هي الظن ، أو بنيان عز موطد % 47(@)(@@) % و لم أدر أن الدهر في عدد العدا ؛ % و أن المنايا السود يرمين عن يد % 48(@)(@@) % بقيت ابن عبد الله تحمى من الردى ، % ويفديك منا سيد بعد سيد % 50(@)(@@) % بعيشة مسعود ؛ وأيام سالم % و نعمة مغبوط ؛ وحال محسد % 52(@)(@@) % ولايحرمني الله قربك ! إنه % مرادي من الدنيا ؛ وحظي ؛ وسؤددي % % PageV01P110 البحر : طويل 1(@)(@@) % لمن جاهد الحساد أجر المجاهد % وأعجز ما حاولت إرضاء حاسد % 2(@)(@@) % و لم أر مثلي اليوم أكثر حاسدا ؛ % كأن قلوب الناس لي قلب واجد % 3(@)(@@) % ألم ير هذا الناس غيري فاضلا ؟ % ولم يظفر الحساد قبلي بماجد ؟ ! % 4(@)(@@) % أرى الغل من تحت النفاق ، وأجتني % % من العسل الماذي سم الأساود 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms23# % 5(@)(@@) % وأصبر ، ما لم يحسب الصبر ذلة ، % وألبس ، للمذموم ، حلة حامد % 6(@)(@@) % قليل اعتذار ، من يبيت ذنوبه % طلاب المعالي واكتساب المحامد % 7(@)(@@) % و أعلم إن فارقت خلا عرفته ، % و حاولت خلا أنني غير واجد % 8(@)(@@) % وهل غض مني الأسر إذ خف ناصري % % و قل على تلك الأمور مساعدي % % 9(@)(@@) % ألا لا يسر الشامتون ، فإنها % % موارد آبائي الأولى ، ومواردي % % 10(@)(@@) % و كم من خليل ، حين جانبت زاهدا % إلى غيره عاودته غير زاهد ! % PageV01P111 11(@)(@@) % وماكل أنصاري من الناس ناصري % % ولا كل أعضادي ، من الناس عاضدي % % 12(@)(@@) % وهل نافعي إن عضني الدهر مفردا % إذا كان لي قوم طوال السواعد % 13(@)(@@) % وهل أنا مسرور بقرب أقاربي % % إذا كان لي منهم قلوب الأباعد ؟ % 14(@)(@@) % أيا جاهدا ، في نيل ما نلت من علا % رويدك ! إني نلتها غير جاهد % 15(@)(@@) % لعمرك ، ما طرق المعالي خفية % ولكن بعض السير ليس بقاصد % 16(@)(@@) % و يا ساهد العينين فيما يريبني ، % ألا إن طرفي في الأذى غير ساهد % 17(@)(@@) % غفلت عن الحساد ، من غير غفلة ، % وبت طويل النوم عن غير راقد % 18(@)(@@) % خليلي ، ما أعددتما لمتيم % أسير لدى الأعداء جافي المراقد ؟ % 19(@)(@@) % فريد عن الأحباب صب ، دموعه % مثان ، على الخدين ، غير فرائد % 20(@)(@@) % إذا شئت جاهرت العدو ، ولم أبت % أقلب فكري في وجوه المكائد % PageV01P112 21(@)(@@) % صبرت على اللأواء ، صبر آبن حرة ، % كثير العدا فيها ، قليل المساعد % 22(@)(@@) % فطاردت ، حتى أبهر الجري أشقري ، % وضاربت حتى أوهن الضرب ساعدي % % 23(@)(@@) % و كنا نرى أن لم يصب ، من تصرمت % مواقفه عن مثل هذي الشدائد % 25(@)(@@) % جمعت سيوف الهند ، من كل بلدة ، % وأعددت للهيجاء كل مجالد % 26(@)(@@) % وأكثرت للغارات بيني وبينهم % % بنات البكيريات حول المزاود % 27(@)(@@) % إذا كان غير الله للمرء عدة ، % أتته الرزايا من وجوه الفوائد % 28(@)(@@) % فقد جرت الحنفاء حتف حذيفة % و كان يراها عدة للشدائد % 29(@)(@@) % وجرت منايا مالك بن نويرة % عقيلته الحسناء ؛ أيام ' خالد ' % 30(@)(@@) % وأردى ذؤابا في بيوت عتيبة ، % أبوه وأهلوه ؛ بشدو القصائد % 31(@)(@@) % عسى الله أن يأتي بخير ؛ فإن لي % % عوائد من نعماه ، غير بوائد % PageV01P113 32(@)(@@) % فكم شالني من قعر ظلماء لم يكن % لينقذني من قعرها حشد حاشد % 33(@)(@@) % فإن عدت يوما ؛ عاد للحرب والعلا % وبذل الندى 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms24# والجود أكرم عائد % 34(@)(@@) % مرير على الأعداء ، لكن جاره % إلى خصب الأكناف عذب الموارد % 35(@)(@@) % مشهى بأطراف النهار وبينها % % له ما تشهى ، من طريف وتالد % 45(@)(@@) % منعت حمى قومي وسدت عشيرتي % % وقلدت أهلي غر هذي القلائد % 46(@)(@@) % خلائق لا يوجدن في كل ماجد ، % ولكنها في الماجد ابن الأماجد % PageV01P114 البحر : هزج 1(@)(@@) % سلام رائح ، غاد ، % على ساكنة الوادي % % 2(@)(@@) % على من حبها الهادي ، % إذا ما زرت ، والحادي % % 3(@)(@@) % أحب البدو ، من أجل % غزال ، فيهم باد % 4(@)(@@) % ألا يا ربة الحلي ، % على العاتق والهادي % % 5(@)(@@) % لقد أبهجت أعدائي % % و قد أشمت حسادي % % 6(@)(@@) % بسقم ما له شاف ، % و أسر ما له فاد % 7(@)(@@) % فإخواني وندماني % % و عذالي عوادي % % 8(@)(@@) % فما أنفك عن ذكراك % في نوم وتسهاد % 9(@)(@@) % بشوق منك معتاد % وطيف غير معتاد % 10(@)(@@) % ألا يا زائر الموص % % ل حي ذلك النادي % % PageV01P115 11(@)(@@) % فبالموصل إخواني ، % و بالموصل أعضادي % % 12(@)(@@) % فقل للقوم يأتون % ي من مثنى وأفراد % 13(@)(@@) % فعندي خصب زوار % و عندي ري وراد % 14(@)(@@) % وعندي الظل ممدودا % على الحاضر والبادي % % 15(@)(@@) % ألا لا يقعد العجز % بكم عن منهل الصادي % % 16(@)(@@) % فإن الحج مفروض % مع الناقة والزاد % 17(@)(@@) % كفاني سطوة الدهر % جواد نسل أجواد % 18(@)(@@) % نماه خير آباء % نمتهم خير أجداد % 19(@)(@@) % فما يصبو إلى أرض % سوى أرضي وروادي % % 20(@)(@@) % وقاه الله ، فيما عا % % ش ، شر الزمن العادي % % PageV01P116 البحر : مجزوء الكامل 1(@)(@@) % وزيارة من غير وعد ، % في ليلة طرقت بسعد % 2(@)(@@) % بات الحبيب إلى الصبا % % ح معانقي خدا لخد % 3(@)(@@) % يمتار في وناظري % % ما شئت من خمر وورد % 4(@)(@@) % قد كان مولاي الأج % % ل ، فصيرته الراح عبدي % % 5(@)(@@) % ليست بأول منة % مشكورة للراح عندي % % PageV01P117 البحر : خفيف تام 1(@)(@@) % ليس جودا عطية بسؤال % قد يهز السؤال غير الجواد % 2(@)(@@) % إنما الجود ما أتاك ابتداء % لم تذق فيه ذلة الترداد % PageV01P118 البحر : طويل 1(@)(@@) % ولما تخيرت الأخلاء لم أجد % صبورا على حفظ المودة والعهد % 2(@)(@@) % سليما على طي الزمان ونشره % أمينا على النجوى صحيحا على البعد % 3(@)(@@) % ولما أساء الظن بي من جعلته % و إياي مثل الكف نيطت إلى الزند % 4(@)(@@) % حملت على ضني به سوء ظنه % % و أيقنت أني بالوفا أمة وحدي % % 5(@)(@@) % و أني على الحالين في العتب والرضى 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms25# % % مقيم على ما كان يعرف من ودي % % PageV01P119 البحر : مجزوء الكامل 1(@)(@@) % وإذا يئست من الدن % و رغبت في فرط البعاد % 2(@)(@@) % أرجو الشهادة في هوا % % ك لأن قلبي في جهاد % PageV01P120 البحر : سريع 1(@)(@@) % يا جاحدا فرط غرامي به ، % ولست بالناسي ولا الجاحد % 2(@)(@@) % أقررت في الحب بما تدعي ، % فلست محتاجا إلى شاهد % PageV01P121 البحر : بسيط تام 1(@)(@@) % بتنا نعلل من ساق أغن لنا % % بخمرتين من الصهباء والخد % 2(@)(@@) % كأنه حين أذكى نار وجنته % سكرا وأسبل فضل الفاحم الجعد % 3(@)(@@) % يعد ماء عناقيد بطرته % بماء ما حملت خداه من ورد % PageV01P122 البحر : كامل تام 1(@)(@@) % إني منعت من المسيسر إليكم % و لو استطعت لكنت أول وارد % 2(@)(@@) % أشكو ، وهل أشكو جناية منعم % غيظ العدو به ، وكبت الحاسد ؟ % 3(@)(@@) % قد كنت عدتي التي أسطو بها % % ويدي إذا اشتد الزمان وساعدي % % 4(@)(@@) % فرميت منك بغير ما أملته % والمرء يشرق بالزلال البارد % 5(@)(@@) % لكن أتت دون السرور مساءة % وصلت لها كف القبول بساعد % 6(@)(@@) % فصبرت كالولد التقي ؛ لبره % أغضى على ألم لضرب الوالد % 7(@)(@@) % و نقضت عهدا كيف لي بوفائه % وسقيت دونك كأس هم صارد % PageV01P123 البحر : طويل 1(@)(@@) % وداع دعاني ، والأسنة دونه ، % صببت عليه بالجواب جوادي % % 2(@)(@@) % جنبت إلى مهري المنيعي مهره % وجللت منه بالنجيع نجادي % % PageV01P124 البحر : سريع 1(@)(@@) % قولا لهذا السيد الماجد % قول حزين ، مثله ، فاقد % 2(@)(@@) % هيهات ! ما في الناس من خالد % لا بد من فقد ومن فاقد % 3(@)(@@) % كن المعزى ، لا المعزى به ، % إن كان لا بد من الواحد % PageV01P125 البحر : بسيط تام 1(@)(@@) % أوصيك بالحزن ، لا أوصيك بالجلد % جل المصاب عن التعنيف والفند % 2(@)(@@) % إني أجلك أن تكفى بتعزية % عن خير مفتقد ، يا خير مفتقد % 3(@)(@@) % هي الرزية إن ضنت بما ملكت % منها الجفون فما تسخو على أحد % 4(@)(@@) % بي مثل ما بك من جزن ومن جزع % وقد لجأت إلى صبر ، فلم أجد % 5(@)(@@) % لم ينتقصني بعدي عنك من حزن ، % هي المواساة في قرب وفي بعد % 6(@)(@@) % لأشركنك في اللأواء إن طرقت % كما شركتك في النعماء والرغد % 7(@)(@@) % أبكي بدمع له من حسرتي مدد ، % وأستريح إلى صبر بلا مدد % 8(@)(@@) % ولا أسوغ نفسي فرحة أبدا ، % و قد عرفت الذي تلقاه 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms26# من كمد % 9(@)(@@) % وأمنع النوم عيني أن يلم بها % % علما بإنك موقوف على السهد % 10(@)(@@) % يا مفردا بات يبكي لا معين له ، % أعانك الله بالتسليم والجلد % PageV01P126 11(@)(@@) % هذا الأسير المبقى لا فداء له % يفديك بالنفس والأهلين والولد % PageV01P127 البحر : مجزوء الكامل 1(@)(@@) % ولقد علمت ، وما علم % ت ، وإن أقمت على صدوده % 2(@)(@@) % أن الغزالة والغزا % % ل ، لفي ثناياه وجيده % PageV01P128 البحر : مجزوء الكامل 1(@)(@@) % لا تطلبن دنو دا % % ر من حبيب ، أو معاشر % 2(@)(@@) % أبقى لأسباب المود % ة أن تزور ولا تجاور % PageV01P129 البحر : مجزوء الكامل 1(@)(@@) % الآن حين عرفت رش % % دي ، فاغتديت على حذر % 2(@)(@@) % ونهيت نفسي فانتهت ، % وزجرت قلبي فانزجر % 3(@)(@@) % ولقد أقام ، على الضلا % % لة ، ثم أذعن ، واستمر % 5(@)(@@) % هيهات ، لست ' أبا فرا % % س ' إن وفيت لمن غدر ! % PageV01P130 البحر : مجزوء الكامل 1(@)(@@) % إن زرت ( خرشنة ) أسيرا % % فلكم أحطت بها مغيرا % % 2(@)(@@) % ولقد رأيت النار تن % تهب المنازل والقصورا % % 3(@)(@@) % ولقد رأيت السبي يج % لب نحونا حوا ، وحورا % % 4(@)(@@) % نختار منه الغادة ال % حسناء ، والظبي الغريرا % % 5(@)(@@) % إن طال ليلي في ذرا % % ك فقد نعمت به قصيرا % % 6(@)(@@) % و لئن لقيت الحزن في % % ك فقد لقيت بك السرورا % % 7(@)(@@) % ولئن رميت بحادث ، % فلألفين له صبورا % % 8(@)(@@) % صبرا لعل الله يف % % تح بعده فتحا يسيرا % 9(@)(@@) % من كان مثلي لم يبت % إلا أسيرا ، أو أميرا % % 10(@)(@@) % ليست تحل سراتنا % % إلا الصدور أو القبورا % % PageV01P131 البحر : طويل 1(@)(@@) % إذا شئت أن تلقى أسودا قساورا ، % لنعماهم الصفو الذي لن يكدرا % % 2(@)(@@) % يلاقيك ، منا ، كل قرم ، سميذع ، % يطاعن حتى يحسب الجون أشقرا % 3(@)(@@) % بدولة سيف الله طلنا على الورى % % وفي عزه صلنا على من تجبرا % % 4(@)(@@) % قصدنا على الأعداء ، وسط ديارهم % بضرب يرى من وقعه الجو أغبرا % % 5(@)(@@) % فسائل كلابا يوم غزوة بالس % ألم يتركوا النسوان في القاع حسرا % 6(@)(@@) % وسائل نميرا ، يوم سار إليهم ، % ألم يوقنوا بالموت ، لما تنمرا ؟ % 7(@)(@@) % وسائل عقيلا ، حين لاذت بتدمر ، % ألم نقرها ضربا يقد السنورا % % 8(@)(@@) % وسائل قشيرا ، حين جفت حلوقها ، % ألم نسقها كأسا ، من الموت ، أحمرا % % 9(@)(@@) % وفي طيىء ، لما أثارت سيوفه % كماتهم ، مرأى لمن كان مبصرا % % 10(@)(@@) % وكلب غداة استعصموا بجبالهم ، % رماهم بها ، شعثا ، شوازب ، ضمرا % % PageV01P132 11(@)(@@) % فأشبع من أبطالهم 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms27# كل طائر ، % وذئب غدا يطوي البسيطة أعفرا % % PageV01P133 البحر : سريع 1(@)(@@) % إرث لصب فيك قد زدته ، % على بلايا أسره ، أسرا % % 2(@)(@@) % قد عدم الدنيا ولذاتها ؛ % لكنه ما عدم الصبرا % % 3(@)(@@) % فهو أسير الجسم في بلدة ، % وهو أسير القلب في أخرى ! % PageV01P134 البحر : بسيط تام 1(@)(@@) % وشادن ، من بني كسرى ، شغفت به % لو كان أنصفني في الحب ما جارا % % 2(@)(@@) % إن زار قصر ليلي في زيارته % وإن جفاني أطال الليل أعمارا % % 3(@)(@@) % كأنما الشمس بي في القوس نازلة % إن لم يزرني وفي الجوزاء إن زار % PageV01P135 البحر : طويل 1(@)(@@) % و كنت ، إذا ما ساءني ، أو أساءني % % لطفت بقلبي أو يقيم له عذرا % % 2(@)(@@) % وأكره إعلام الوشاة بهجره % فأعتبه سرا ، وأشكره جهرا % 3(@)(@@) % وهبت لضني سوء ظني ، ولم أدع ، % على حاله ، قلبي يسر له شرا % % PageV01P136 البحر : وافر تام 1(@)(@@) % دع العبرات تنهمر انهمارا ، % و نار الوجد تستعر استعارا % % 2(@)(@@) % أتطفأ حسرتي ، وتقر عيني ، % و لم أوقد ، مع الغازين ، نارا ؟ % 3(@)(@@) % رأيت الصبر أبعد ما يرجى ، % إذا ما الجيش بالغازين سارا % % 4(@)(@@) % وأعددت الكتائب معلمات % تنادي ، كل آن ، بي : سعارا % % 5(@)(@@) % وقد ثقفت للهيجاء رمحي ، % وأضمرت المهاري والمهارا % % 6(@)(@@) % و كان إذا دعانا الأمر حفت % بنا الفتيان ، تبتدر ابتدارا % % 7(@)(@@) % بخيل لا تعاند من عليها ، % وقوم لا يرون الموت عارا % % 8(@)(@@) % وراء القافلين بكل أرض ، % وأول من يغير ، إذا أغارا % % 9(@)(@@) % ستذكرني ، إذا طردت ، رجال ، % دفقت الرمح بينهم مرارا % % 10(@)(@@) % و أرض ، كنت أملؤها خيولا ، % و جو ، كنت أرهقه غبارا % % PageV01P137 11(@)(@@) % لعل الله يعقبني صلاحا % قويما ، أو يقليني العثارا % % 12(@)(@@) % فأشفي من طعان الخيل صدرا % وأدرك من صروف الدهر ثارا % % 13(@)(@@) % أقمت على ' الأمير ' ، وكنت ممن % يعز عليه فرقته ، اختيارا % % 14(@)(@@) % إذا سار ' الأمير ' ، فلا هدوا % % لنفسي أو يؤوب ، ولا قرارا % % 15(@)(@@) % أكابد بعده هما ، وغما ، % و نوما ، لا ألذ به غرارا % % 16(@)(@@) % وكنت به أشد ذوي بطشا ، % وأبعدهم ، إذا ركبوا ، مغارا % % 17(@)(@@) % أشق ، وراءه ، الجيش المعبا ، % و أخرق ، بعده ، الرهج المثارا % % 18(@)(@@) % إذا بقي الأمير قرير عين % فديناه ، اختيارا ، لا اضطرار % % 19(@)(@@) % أب بر ، ومولى ، وابن عم ، % و مستند ، إذا ما الخطب جارا % % 20(@)(@@) % يمد على أكابرنا جناحا ، % و يكفل ، في مواطننا ، الصغارا % % PageV01P138 21(@)(@@) % أراني 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms28# الله طلعته ، سريعا ، % وأصحبه السلامة ، حيث سارا % % 22(@)(@@) % وبلغه أمانيه جميعا ، % و كان له من الحدثان جارا % % PageV01P139 البحر : طويل 1(@)(@@) % وما نعمة مشكورة ، قد صنعتها % % إلى غير ذي شكر ، بمانعتي أخرى % % 2(@)(@@) % سآتي جميلا ، ما حييت ، فإنني % % إذا لم أفد شكرا ، أفدت به أجرا % % PageV01P140 البحر : مجزوء الكامل 1(@)(@@) % إن لم تجاف عن الذنو % % ب ، وجدتها فينا كثيره % % 2(@)(@@) % لكن عادتك الجمي % % لة أن تغض على بصيره % PageV01P141 البحر : هزج 1(@)(@@) % لقد نافسني الدهر % بتأخيري عن الحضرة % % 2(@)(@@) % فما ألقى من العل % ة ما ألقى من الحسرة % PageV01P142 البحر : مجزوء الرجز 1(@)(@@) % وجلنار مشرق ، % على أعالي شجره % 2(@)(@@) % كأن في رؤوسه ، % أصفره ، وأحمره % 3(@)(@@) % قراضة من ذهب % في خرق معصفره % % PageV01P143 البحر : وافر تام 1(@)(@@) % و قوفك في الديار عليك عار ، % و قد رد الشباب المستعار % 2(@)(@@) % أبعد الأربعين محرمات : % تماد في الصبابة ، واغترار ؟ ! . . % 3(@)(@@) % نزعت عن الصبا ، إلا بقايا ، % يحفدها ، على الشيب ، العقار % 4(@)(@@) % وقال الغانيات : ( سلا ، غلاما ، % فكيف به ، وقد شاب العذار ؟ ' % 5(@)(@@) % و ما أنسى الزيارة منك ، وهنا ، % و موعدنا ' معان ' و ' الحيار ' % 6(@)(@@) % وطال الليل بي ، ولرب دهر % نعمت به ، لياليه قصار % 7(@)(@@) % و ندماني : السريع إلى لقائي ، % على عجل ، وأقداحي الكبار % 8(@)(@@) % عشقت بها عواري الليالي % ' أحق الخيل بالركض المعار % 9(@)(@@) % وكم من ليلة لم أرو منها % % حننت لها ، وأرقني ادكار ! % 10(@)(@@) % قضاني الدين ماطله ، ووافى ، % إلي بها ، الفؤاد المستطار % PageV01P144 11(@)(@@) % فبت أعل خمرا من رضاب % لها سكر وليس لها خمار % 12(@)(@@) % إلى أن رق ثوب الليل عنا % % وقالت : ' قم ! فقد برد السوار ! % 13(@)(@@) % وولت تسرق اللحظات نحوي % % على فرق كما التفت الصوار % 14(@)(@@) % دنا ذاك الصباح ، فلست أدري % % أشوق كان منه ؟ أم ضرار ؟ % 15(@)(@@) % وقد عاديت ضوء الصبح حتى % % لطرفي ، عن مطالعه ، ازورار % 16(@)(@@) % و مضطغن يراود في عيبا % سيلقاه ، إذا سكنت وبار % 17(@)(@@) % وأحسب أنه سيجر حربا % على قوم ذنوبهم صغار % 18(@)(@@) % كما خزيت ب ' راعيها ' ' نمير ' ، % وجر على ' بني أسد ' ' يسار ' % 19(@)(@@) % وكم يوم وصلت بفجر ليل % كأن الركب تحتهما صدار ؟ % 20(@)(@@) % إذا انحسر الظلام امتد آل % كأنا دره ، وهو البحار % PageV01P145 21(@)(@@) % يموج على النواظر ، فهو ماء % و يلفح بالهواجر فهو نار % 22(@)(@@) % إذا ما العز أصبح في 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms29# مكان % سموت له ، وإن بعد المزار % 23(@)(@@) % مقامي ، حيث لا أهوى ، قليل % ونومي ، عند من أقلي غرار % 24(@)(@@) % أبت لي همتي ، وغرار سيفي ، % وعزمي ، والمطية ، والقفار % 25(@)(@@) % ونفس ، لا تجاورها الدنايا ، % وعرض ، لا يرف عليه عار % 26(@)(@@) % وقوم ، مثل من صحبوا ، كرام % وخيل ، مثل من حملت ، خيار % 27(@)(@@) % و كم بلد شتتناهن فيه % ضحى ، وعلا منابره الغبار % 28(@)(@@) % وخيل ، خف جانبها ، فلما % % ذكرنا بينها نسي الفرار % 29(@)(@@) % و كم ملك ، نزعنا الملك عنه ، % و جبار ، بها دمه جبار ؟ % 30(@)(@@) % وكن إذا أغرنا على ديار % رجعن ، ومن طرائدها الديار % PageV01P146 31(@)(@@) % فقد أصبحن والدنيا جميعا % لنا دار ، ومن تحويه جار % 32(@)(@@) % إذا أمست نزار لنا عبيدا % فإن الناس كلهم ' نزار ' % PageV01P147 البحر : كامل تام 1(@)(@@) % ويد يراها الدهر غير ذميمة ، % تمحو إساءته إلي وتغفر % 2(@)(@@) % أهدت إلي مودة من صاحب % تزكو المودة في ثراه ، وتثمر % 3(@)(@@) % علقت يدي منه بعلق مضنة % مما يصان على الزمان ويدخر % 4(@)(@@) % إني عليك ' أبا حصين ' ، عاتب % و الحر يحتمل الصديق ، ويصبر % 5(@)(@@) % وإذا وجدت على الصديق شكوته % سرا إليه وفي المحافل أشكر % 6(@)(@@) % ما بال شعري لا ترد جوابه ؟ % سحبان عندك باقل ، لا أعذر % PageV01P148 البحر : رجز تام 1(@)(@@) % كأنما الماء عليه الجسر % درج بياض خط فيه سطر % 2(@)(@@) % كأننا ، لما استتب العبر ، % أسرة ' موسى ' يوم شق البحر ! % PageV01P149 البحر : خفيف تام 1(@)(@@) % قد عرفنا مغزاك ، يا عيار % وتلظت ، كما أردت ، النار % 2(@)(@@) % لم أزل ثابتا على الهجر حتى % % خف صبري ، وقلت الأنصار % 3(@)(@@) % وإذا أحدث الحبيبان أمرا % كان فيه على المحب الخيار % PageV01P150 البحر : وافر تام 1(@)(@@) % أيا أم الأسير ، سقاك غيث ، % بكره منك ، ما لقي الأسير ! % 2(@)(@@) % أيا أم الأسير ، سقاك غيث ، % تحير ، لا يقيم ولا يسير ! % 3(@)(@@) % أيا أم الأسير ، سقاك غيث ، % إلى من بالفدا يأتي البشير ؟ % 4(@)(@@) % أيا أم الأسير ، لمن تربى % % وقد مت ، الذوائب والشعور ؟ % 5(@)(@@) % إذا ابنك سار في بر وبحر ، % فمن يدعو له ، أو يستجير ؟ % 6(@)(@@) % حرام أن يبيت قرير عين ! % ولوم أن يلم به السرور ! % 7(@)(@@) % تحير ، لا يقيم ولا يسير ! % ولا ولد ، لديك ، ولا عشير % % 8(@)(@@) % و غاب حبيب قلبك عن مكان ، % ملائكة السماء به حضور % % 9(@)(@@) % ليبكك كل يوم صمت 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms30# فيه % مصابرة وقد حمي الهجير % % 10(@)(@@) % ليبكك كل ليل قمت فيه % إلى أن يبتدي الفجر المنير ! % PageV01P151 11(@)(@@) % ليبكك كل مضطهد مخوف % أجرتيه ، وقد قل المجير ! % 12(@)(@@) % ليبكك كل مسكين فقير % أغثتيه ، وما في العظم زير % % 13(@)(@@) % أيا أماه ، كم هم طويل % مضى بك لم يكن منه نصير ! ؟ % 14(@)(@@) % أيا أماه ، كم سر مصون % بقلبك ، مات ليس له ظهور % % 15(@)(@@) % أيا أماه ، كم بشرى بقربي % % أتتك ، ودونها الأجل القصير % % 16(@)(@@) % إلى من أشتكي ؟ ولمن أناجي ، % إذا ضاقت بما فيها الصدور ؟ % 17(@)(@@) % بأي دعاء داعية أوقى ؟ % بأي ضياء وجه أستنير ؟ % 18(@)(@@) % وقد مت ، الذوائب والشعور ؟ % بمن يستفتح الأمر العسير ؟ % 19(@)(@@) % نسلى عنك : أنا عن قليل ، % إلى ما صرت في الأخرى ، نصير % PageV01P152 البحر : طويل 1(@)(@@) % أراك عصي الدمع شيمتك الصبر ، % أما للهوى نهي عليك ولا أمر ؟ % 2(@)(@@) % بلى أنا مشتاق وعندي لوعة ، % ولكن مثلي لا يذاع له سر ! % 3(@)(@@) % إذا الليل أضواني بسطت يد الهوى % % وأذللت دمعا من خلائقه الكبر % 4(@)(@@) % تكاد تضيء النار بين جوانحي % % إذا هي أذكتها الصبابة والفكر % 5(@)(@@) % معللتي بالوصل ، والموت دونه ، % إذا مت ظمآنا فلا نزل القطر ! % 6(@)(@@) % حفظت وضيعت المودة بيننا % % و أحسن ، من بعض الوفاء لك ، العذر % 7(@)(@@) % و ما هذه الأيام إلا صحائف % لأحرفها ، من كف كاتبها بشر % 8(@)(@@) % بنفسي من الغادين في الحي غادة % هواي لها ذنب ، وبهجتها عذر % 9(@)(@@) % تروغ إلى الواشين في ، وإن لي % % لأذنا بها ، عن كل واشية ، وقر % 10(@)(@@) % بدوت ، وأهلي حاضرون ، لأنني % % أرى أن دارا ، است من أهلها ، قفر % PageV01P153 11(@)(@@) % وحاربت قومي في هواك ، وإنهم % وإياي ، لولا حبك ، الماء والخمر % 12(@)(@@) % فإن كان ما قال الوشاة ولم يكن % فقد يهدم الإيمان ما شيد الكفر % 13(@)(@@) % وفيت ، وفي بعض الوفاء مذلة % لآنسة في الحي شيمتها الغدر % 14(@)(@@) % وقور ، وريعان الصبا يستفزها ، % فتأرن ، أحيانا ، كما يأرن المهر % 15(@)(@@) % تسائلني : ' من أنت ؟ ' ، وهي عليمة ، % وهل بفتى مثلي على حاله نكر ؟ % 16(@)(@@) % فقلت ، كما شاءت ، وشاء لها الهوى : % قتيلك ! قالت : أيهم ؟ فهم كثر % 17(@)(@@) % فقلت لها : ' لو شئت لم تتعنتي ، % ولم تسألي عني وعندك بي خبر ! % 18(@)(@@) % فقالت : ' لقد أزرى بك الدهر بعدنا ! % فقلت : ' معاذ الله ! بل أنت لا الدهر ، % 19(@)(@@) % وما 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms31# كان للأحزان ، لولاك ، مسلك % إلى القلب ؛ لكن الهوى للبلى جسر % 20(@)(@@) % وتهلك بين الهزل والجد مهجة % إذا ما عداها البين عذبها الهجر % PageV01P154 21(@)(@@) % فأيقنت أن لا عز ، بعدي ، لعاشق ؛ % وأن يدي مما علقت به صفر % 22(@)(@@) % وقلبت أمري لا أرى لي راحة ، % إذا البين أنساني ألح بي الهجر % 23(@)(@@) % فعدت إلى حكم الزمان وحكمها ، % لها الذنب لا تجزى به ولي العذر % 24(@)(@@) % كأني أنادي دون ميثاء ظبية % على شرف ظمياء جللها الذعر % 25(@)(@@) % تجفل حينا ، ثم تدنو كأنما % % تنادي طلا ، بالواد ، أعجزه الحضر % 26(@)(@@) % فلا تنكريني ، يابنة العم ، إنه % ليعرف من أنكرته البدو والحضر % 27(@)(@@) % ولا تنكريني ، إنني غير منكر % إذا زلت الأقدام ؛ واستنزل النضر % 28(@)(@@) % وإني لجرار لكل كتيبة % معودة أن لا يخل بها النصر % 29(@)(@@) % و إني لنزال بكل مخوفة % كثير إلى نزالها النظر الشزر % 30(@)(@@) % فأظمأ حتى ترتوي البيض والقنا % % وأسغب حتى يشبع الذئب والنسر % PageV01P155 31(@)(@@) % ولا أصبح الحي الخلوف بغارة ، % ولا الجيش ما لم تأته قبلي النذر % 32(@)(@@) % ويا رب دار ، لم تخفني ، منيعة % طلعت عليها بالردى ، أنا والفجر % 33(@)(@@) % و حي رددت الخيل حتى ملكته % هزيما وردتني البراقع والخمر % 34(@)(@@) % وساحبة الأذيال نحوي ، لقيتها % % فلم يلقها جهم اللقاء ، ولا وعر % 35(@)(@@) % وهبت لها ما حازه الجيش كله % و رحت ، ولم يكشف لأثوابها ستر % 36(@)(@@) % و لا راح يطغيني بأثوابه الغنى % % و لا بات يثنيني عن الكرم % 37(@)(@@) % و ما حاجتي بالمال أبغي وفوره ؟ % إذا لم أفر عرضي فلا وفر الوفر % 38(@)(@@) % أسرت وما صحبي بعزل ، لدى الوغى ، % ولا فرسي مهر ، ولا ربه غمر ! % 39(@)(@@) % و لكن إذا حم القضاء على أمرىء % فليس له بر يقيه ، ولا بحر ! % 40(@)(@@) % وقال أصيحابي : ' الفرار أوالردى ؟ ' % فقلت : هما أمران ، أحلاهما مر % PageV01P156 41(@)(@@) % ولكنني أمضي لما لا يعيبني ، % وحسبك من أمرين خيرهما الأسر % 42(@)(@@) % يقولون لي : ' بعت السلامة بالردى ' % فقلت : أما والله ، ما نالني خسر % 43(@)(@@) % و هل يتجافى عني الموت ساعة ، % إذا ما تجافى عني الأسر والضر ؟ % 44(@)(@@) % هو الموت ، فاختر ما علا لك ذكره ، % فلم يمت الإنسان ما حيي الذكر % 45(@)(@@) % و لا خير في دفع الردى بمذلة % كما ردها ، يوما بسوءته ' عمرو ' % 46(@)(@@) % يمنون 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms32# أن خلوا ثيابي ، وإنما % % علي ثياب ، من دمائهم حمر % 47(@)(@@) % و قائم سيفي ، فيهم ، اندق نصله % وأعقاب رمح فيهم حطم الصدر % 48(@)(@@) % سيذكرني قومي إذا جد جدهم ، % ' وفي الليلة الظلماء ، يفتقد البدر ' % 49(@)(@@) % فإن عشت فالطعن الذي يعرفونه % % و تلك القنا ، والبيض والضمر الشقر % 50(@)(@@) % وإن مت فالإنسان لا بد ميت % وإن طالت الأيام ، وانفسح العمر % PageV01P157 51(@)(@@) % ولو سد غيري ، ما سددت ، اكتفوا به ؛ % وما كان يغلو التبر ، لو نفق الصفر % 52(@)(@@) % ونحن أناس ، لا توسط عندنا ، % لنا الصدر ، دون العالمين ، أو القبر % 53(@)(@@) % تهون علينا في المعالي نفوسنا ، % و من خطب الحسناء لم يغلها المهر % 54(@)(@@) % أعز بني الدنيا ، وأعلى ذوي العلا ، % وأكرم من فوق التراب ولا فخر % PageV01P158 البحر : مجزوء المتقارب 1(@)(@@) % لأيكمم أذكر ؟ % وفي أيكم أفكر ؟ % 2(@)(@@) % و كم لي على بلدتي ، % بكاء ومستعبر ؟ % 3(@)(@@) % ففي حلب عدتي ، % وعزي ، والمفخر % 4(@)(@@) % وفي ' منبج ' ، من رضا % % ه ، أنفس ما أذخر % 5(@)(@@) % ومن حبه زلفة ، % بها يكرم المحشر % 6(@)(@@) % وأصبية ، كالفراخ ، % أكبرهم أصغر % 7(@)(@@) % وقوم ألفناهم ، % و غصن الصبا أخضر % 8(@)(@@) % يخيل لي أمرهم % كأنهم حضر % 9(@)(@@) % فحزني لا ينقضي ، % و دمعي ما يفتر % 10(@)(@@) % و ما هذه أدمعي ، % ولا ذا الذي أضمر % PageV01P159 11(@)(@@) % ولكن أداري الدموع ، % وأستر ما أستر % 12(@)(@@) % مخافة قول الوشا % % ة ، مثلك لا يصبر % 13(@)(@@) % أيا غفلتا ، كيف لا % % أرجي الذي أحذر ؟ % 14(@)(@@) % و ماذا القنوط الذي % % أراه فأستشعر ؟ % 15(@)(@@) % أما من بلاني به ، % على كشفه أقدر ؟ % 16(@)(@@) % بلى ، إن لي سيدا % مواهبه أكثر % 17(@)(@@) % وإني غزير الذنوب ، % و إحسانه أغزر % 19(@)(@@) % بذنبي أوردتني ، % ومن فضلك المصدر % PageV01P160 البحر : خفيف تام 1(@)(@@) % مغرم ، مؤلم ، جريح ، أسير % إن قلبا ، يطيق ذا ، لصبور % 2(@)(@@) % وكثير من الرجال حديد ، % وكثير من القلوب صخور % 3(@)(@@) % قل لمن حل بالشآم طليقا ، % بأبي قلبك الطليق الأسير % 4(@)(@@) % أنا أصبحت لا أطيق حراكا ، % كيف أصبحت أنت يا ' منصور ' ؟ % PageV01P161 البحر : هزج 1(@)(@@) % أتتني عنك أخبار ، % و بانت منك أسرار % 2(@)(@@) % ولاحت لي ، من السلو % ة ، آيات وآثار % 3(@)(@@) % أراها منك بالقلب ، % و للأحشاء أبصار % 4(@)(@@) % إذا ما برد الحب % فما تسخنه النار % PageV01P162 البحر : خفيف تام 1(@)(@@) % قمر ، دون حسنه الأقمار ، % وكثيب من النقا ، مستعار % 2(@)(@@) % و غزال فيه نفار ، ولا بد 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms33# % ع فمن شيمة الظباء النفار % 3(@)(@@) % لا أعاصيه في اجتراح المعاصي ، % في هوى مثله تطيب النار % 4(@)(@@) % قد حذرت الملاح دهرا ، ولكن % % ساقني ، نحو حبه ، المقدار % 6(@)(@@) % كم أردت السلو فاستعطفتني % % رقية من رقاك يا عيار % PageV01P163 البحر : مجتث 1(@)(@@) % يا معشر الناس ! هل لي % % مما لقيت مجير ؟ % 2(@)(@@) % أصاب غرة قلبي % % هذا الغزال الغرير % 3(@)(@@) % فعمر ليلي طويل ، % وعمر نومي قصير % 4(@)(@@) % أسرت مني فؤادي ، % يفديك ذاك الأسير % PageV01P164 البحر : خفيف تام 1(@)(@@) % سبق الناس ، في الهوى ، منصور % فسواه مكلف ، مغرور % 2(@)(@@) % لحق العود ، ناعما ، فثناه % و هو صعب ، على سواه ، عسير % 3(@)(@@) % إن حب الصبا ، وإن طال ، لا يق % دح فيه ، على الدهور ، دثور % 4(@)(@@) % فهو في أضلع الصغير صغير ، % و هو في أضلع الكبير كبير % PageV01P165 البحر : طويل 1(@)(@@) % أيحلو ، لمن لا صبر ينجده ، صبر % إذا ما انقضى فكر ألم به فكر ؟ % 2(@)(@@) % أممعنة في العذل ، رفقا بقلبه ! % أيحمل ذا قلب ، ولو أنه صخر ؟ % 3(@)(@@) % عذيري من اللائي يلمن على الهوى % % أما في الهوى ، لو ذقن طعم الهوى عذر ؟ % 4(@)(@@) % أطلن عليه اللوم حتى تركنه % وساعته شهر ، وليلته دهر % 5(@)(@@) % و منكرة ما عاينت من شحوبه % ولا عجب ، ما عاينته ، ولا نكر % 6(@)(@@) % ويحمد في العضب البلى وهو قاطع % ويحسن في الخيل المسمومة ، الضمر % 7(@)(@@) % و قائلة : ' ماذا دهاك ' ؟ تعجبا % فقلت لها : ' يا هذه أنت والدهر ! ' % 8(@)(@@) % أبالبين ؟ أم بالهجر ؟ أم بكليهما % % تشارك ، فيما ساءني ، البين والهجر ؟ % 9(@)(@@) % يذكرني نجدا حبيب ، بأرضها ، % أيا صاحبي نجواي ، هل ينفع الذكر ؟ % 10(@)(@@) % نطاولت الكثبان ، بيني وبينه ، % وباعد ، فيما بيننا ، البلد القفر % PageV01P166 11(@)(@@) % مفاوز لا يعجزن صاحب همة ، % وإن عجزت ، عنها ، الغريرية الصبر % 12(@)(@@) % كأن سفينا ، بين فيد وحاجر ، % يحف به ، من آل قيعانه ، بحر % 13(@)(@@) % عداني عنه : ذود أعداء منهل ، % كثير إلى وراده النظر الشزر % 14(@)(@@) % وسمر أعاد ، تلمع البيض بينهم ، % وبيض أعاد ، في أكفهم السمر % 15(@)(@@) % وقوم ، متى ما ألقهم روي القنا ، % و أرض متى ما أغزها شبع النسر % 16(@)(@@) % وخيل يلوح الخير بين عيونها ، % و نصل ، متى ما شمته نزل النصر % 17(@)(@@) % إذا ما الفتى أذكى مغاورة العدى % % فكل بلاد حل ساحتها ثغر % 18(@)(@@) % و يوم ، كأن الأرض شابت لهوله 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms34# ، % قطعت بخيل حشو فرسانها صبر ، % 19(@)(@@) % تسير على مثل الملاء منشرا ، % وآثارها طرز لأطرافها حمر % 20(@)(@@) % أشيعه والدمع من شدة الأسى ، % على خده نظم ، وفي نحره نثر % PageV01P167 21(@)(@@) % وعدت ، وقلبي في سجاف غبيطه ، % ولي لفتات ، نحو هودجه ، كثر % 22(@)(@@) % و فيمن حوى ذاك الحجيج خريدة % لها دون عطف الستر من صونها ستر % 23(@)(@@) % و في الكم كف يراها عديلها ، % و في الخدر وجه ليس يعرفه الخدر % 24(@)(@@) % فهل عرفات عارفات بزورها ؟ % و هل شعرت تلك المشاعر والحجر ؟ % 25(@)(@@) % أما اخضر من بطنان مكة ما ذوى ؟ % أما أعشب الوادي أما أنبت الصخر ؟ % 26(@)(@@) % سقى الله قوما ، حل رحلك فيهم ، % سحائب ، لا قل جداها ، ولا نزر ! % PageV01P168 البحر : بسيط تام 1(@)(@@) % كيف السبيل إلى طيف يزاوره % والنوم ، في جملة الأحباب ، هاجره ؟ % 2(@)(@@) % الحب آمره ، والصون زاجره ، % والصبر أول ما تأتي أواخره % 3(@)(@@) % أنا الذي إن صبا أو شفه غزل % فللعفاف ، وللتقوى مآزره % 4(@)(@@) % وأشرف الناس أهل الحب منزلة ، % وأشرف الحب ما عفت سرائره % 5(@)(@@) % ما بال ليلي لا تسري كواكبه ، % وطيف عزة لا يعتاد زائره ؟ % 6(@)(@@) % من لا ينام ، فلا صبر يؤازره % و لا خيال ، على شحط ، يزاوره % 7(@)(@@) % يا ساهرا ، لعبت أيدي الفراق به % % فالصبر خاذله ، والدمع ناصره % 8(@)(@@) % إن الحبيب الذي هام الفؤاد به ، % ينام عن طول ليل ، أنت ساهره % 9(@)(@@) % ما أنس لا أنس ، يوم البين ، موقفنا % % والشوق ينهى البكى عني ويأمره % 10(@)(@@) % و قولها ، ودموع العين واكفة : % هذا الفراق الذي كنا نحاذره % PageV01P169 11(@)(@@) % هل أنت ، يا رفقة العشاق ، مخبرتي % % عن الخليط الذي زمت أباعره ؟ % 12(@)(@@) % وهل رأيت ، أمام الحي ، جارية % كالجؤذر الفرد ، تقفوه جآذره ؟ % 13(@)(@@) % و أنت ، يا راكبا ، يزجي مطيته % يستطرق الحي ليلا ، أو يباكره % 14(@)(@@) % إذا وصلت فعرض بي وقل لهم : % هل واعد الوعد يوم البين ذاكره ؟ % 15(@)(@@) % ما أعجب الحب يمسي طوع جارية % في الحي من عجزت عنه مساعره % 16(@)(@@) % ويتقي الحي من جاء وغادية % كيف الوصول إذا ما نام سامره ؟ % 17(@)(@@) % يا أيها العاذل الراجي إنابته ، % و الحب قد نشبت فيه أظافره ، % 18(@)(@@) % لا تشغلن ؛ فما تدري بحرقته ، % أأنت عاذله ؟ أم أنت عاذره ؟ % 19(@)(@@) % و راحل أوحش الدنيا برحلته ، % و إن غدا 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms35# معه قلبي يسايره % 20(@)(@@) % هل أنت مبلغه عني بأن له % ودا ، تمكن في قلبي يجاوره ؟ % PageV01P170 21(@)(@@) % و أنني من صفت منه سرائره ، % وصح باطنه ، منه ، وظاهره ؟ % 22(@)(@@) % وما أخوك الذي يدنو به نسب ، % لكن أخوك الذي تصفو ضمائره % 23(@)(@@) % و أنني واصل من أنت واصله ، % و أنني هاجر من أنت هاجره % 24(@)(@@) % و لست واجد شيء أنت عادمه ، % ولست غائب شيء أنت حاضره % 25(@)(@@) % وافى كتابك ، مطويا على نزه ، % يحار سامعه فيه ، وناظره % 26(@)(@@) % فالعين ترتع فيما خط كاتبه ، % و السمع ينعم فيما قال شاعره % 27(@)(@@) % فإن وقفت ، أمام الحي أنشده ، % ود الخرائد لو تقنى جواهره % 28(@)(@@) % ' أبا الحصين ' وخير القول أصدقه ، % أنت الصديق الذي طابت مخابره % 29(@)(@@) % لولا اعتذار أخلائي بك انصرفوا % % بوجه خزيان لم تقبل معاذره % 30(@)(@@) % أين الخليل الذي يرضيك باطنه ، % مع الخطوب ، كما يرضيك ظاهره ؟ % PageV01P171 31(@)(@@) % أما الكتاب ، فإني لست أقرؤه % إلا تبادر من دمعي بوادره % 32(@)(@@) % يجري الجمان ، كما يجري الجمان به ، % وينشر الدر ، فوق الدر ، ناثره % 33(@)(@@) % أنا الذي لا يصيب الدهر عترته ، % ولا يبيت على خوف مجاوره % 34(@)(@@) % يمسي وكل بلاد حلها وطن ، % وكل قوم ، غدا فيهم ، عشائره % 35(@)(@@) % و ما تمد له الأطناب في بلد ، % إلا تضعضع باديه وحاضره % 36(@)(@@) % لي التخير ، مشتطا ومنتصفا ، % وللأفاضل ، بعدي ، ما أغادره % 38(@)(@@) % وكيف تنتصف الأعداء من رجل % ألعز أوله ، والمجد آخره % 39(@)(@@) % زاكي الأصول ، كريم النبعتين ؛ ومن % زكت أوائله طابت أواخره % 40(@)(@@) % فمن ' سعيد بن حمدان ' ولادته ، % و من ' علي بن عبد الله ' سائره ! % 41(@)(@@) % ألقائل ، الفاعل ، المأمون نبوته % والسيد الأيد ، الميمون طائره % PageV01P172 42(@)(@@) % بنى لنا العز ، مرفوعا دعائمه ، % وشيد المجد ، مشتدا مرائره % 43(@)(@@) % فما فضائلنا إلا فضائله ، % ولا مفاخرنا إلا مفاخره % 44(@)(@@) % لقد فقدت أبي ، طفلا ، فكان أبي ، % من الرجال ، كريم العود ، ناضره % 45(@)(@@) % فهو ابن عمي دنيا ، حين أنسبه % لكنه لي مولى لا أناكره % 46(@)(@@) % ما زال لي نجوة ، مما أحاذره ، % لا زال ، في نجوة ، مما يحاذره % 48(@)(@@) % % منه ، وعمر للإسلام عامره % 49(@)(@@) % هذا كتاب مشوق القلب مكتئب % لم يأل ناظمه ، جهدا ، وناثره % 50(@)(@@) % وقد سمحت غداة البين ، مبتدئا % من الجواب ، بوعد أنت ذاكره % 51(@)(@@) % بقيت ، ماغردت ورق الحمام ، وما % % استهل من مونق 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms36# الوسمي باكره % 52(@)(@@) % حتى تبلغ أقصى ما تؤمله ، % من الأمور ، وتكفى ما تحاذره % PageV01P173 البحر : طويل 1(@)(@@) % و ظبي غرير ، في فؤادي كناسه ، % إذا اكتنس العين الفلاة وحورها % % 2(@)(@@) % تقر له بيض الظباء وأدمها % % و يحكيه ، في بعض الأمور ، غريرها % % 3(@)(@@) % فمن خلقه لباتها ونحورها ، % ومن خلقه عصيانها ونفورها % % PageV01P174 البحر : طويل 1(@)(@@) % ألا ما لمن أمسى يراك وللبدر ، % وما لمكان أنت فيه وللقطر % 2(@)(@@) % تجللت بالتقوى ، وأفردت بالعلا ، % وأهلت للجلى ، وحليت بالفخر % 3(@)(@@) % وقلدتني ، لما ابتدأت بمدحتي ، % يدأ لا أوفي شكرها ، أبد الدهر % 4(@)(@@) % فإن أنا لم أمنحك صدق مودتي % % فما لي إلى المجد المؤثل من عذر % 5(@)(@@) % أيا بن الكرام الصيد ، جاءت كريمة : % ' أيا بن الكرام الصيد والسادة الغر ' % 6(@)(@@) % فضلت بها أهل القريض ، فأصبحت % تحية أهل البدو ، مؤنسة الحضر % 8(@)(@@) % ومثلك معدوم النظير من الورى % % و شعرك معدوم الشبيه من الشعر % 9(@)(@@) % كأن على ألفاظه ، ونظامه % بدائع ما حاك الربيع من الزهر % 10(@)(@@) % تنفس فيه الروض فاخضل بالندى % % و هب نسيم الروض يخبر بالفجر % 11(@)(@@) % إلى الله أشكو من فراقك لوعة ، % طويت لها ، مني الضلوع ، على جمر % PageV01P175 12(@)(@@) % و حسرة مرتاح إذا اشتاق قلبه ، % تعلل بالشكوى وعاد إلى الصبر % 13(@)(@@) % فعد يا زمان القرب ، في خير عيشة ، % و أنعم بال ، ما بدا كوكب دري ، % 14(@)(@@) % وعش ' يابن نصر ' ما استهلت غمامة ، % تروح إلى عز وتغدو على نصر % PageV01P176 البحر : خفيف تام 1(@)(@@) % مستجير الهوى بغير مجير ، % ومضام الهوى بغير نصير % 2(@)(@@) % ما لمن وكل الهوى مقلتيه % بانسكاب وقلبه بزفير ؟ ! % 3(@)(@@) % فهو ما بين عمر ليل طويل ، % يتلظى ، وعمر نوم قصير % 4(@)(@@) % لا أقول : المسير أر ق عيني ! % قد تناهى البلاء ، قبل المسير ! % 5(@)(@@) % يا كثيبا ، من تحت غصن رطيب ، % يتثنى ، من تحت بدر منير ! % 6(@)(@@) % شد ما غيرتك بعدي ، الليالي % % يا قليل الوفا ، قليل النظير % 7(@)(@@) % لك وصفي ، وفيك شعري ؛ ولا أع % % رف وصف المؤارة العيسجور % 8(@)(@@) % ولقلبي من حسن وجهك شغل % عن هوى قاصرات تلك القصور % 9(@)(@@) % قد منحت الرقاد عين خلي % بات خلوا مما يجن ضميري % % 10(@)(@@) % لا بلا الله من أحب بحب ، % وشفى كل عاشق مهجور % PageV01P177 11(@)(@@) % يا أخي ' يا أبا زهير ' ألي عن % % دك 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms37# عون على الغزال الغرير ؟ % 12(@)(@@) % إن لي ، مذء نأيت ، جسم مريض % % و بكا ثاكل ، وذل أسير % 13(@)(@@) % لم تزل مشتكاي ، في كل أمر ، % ومعيني ، وعدتي ، ونصيري % % 14(@)(@@) % وردت منك ، يا بن عمي ، هدايا % % تتهادى في سندس ، وحرير % 15(@)(@@) % بفواف ، ألذ من بارد الما % % ء ، ولفظ كاللؤلؤ المنثور % 16(@)(@@) % محكم ، قصر ' الفرزدق ' و ' الأخ % % طل عنه ، وفاق شعر جرير % 17(@)(@@) % أنت ليث الوغى ، وحتف الأعادي % % وغياث الملهوف والمستجير % 18(@)(@@) % طلت ، في الضرب للطلى عن شبيه % وتعاليت ، في العلا ، عن نظير % 19(@)(@@) % كنت جربتني ، وأنت كثير ال % % كيس ، طب بكل أمر كبير % 20(@)(@@) % و إذا كنت ، ' يابن عمي ' ، قنوعا % بجوابي ، قنعت بالميسور % PageV01P178 21(@)(@@) % هاج شوقي إليك ، حين أتتني :(@)(@@) % هاج شوق المتيم المهجور ) % PageV01P179 البحر : وافر تام 1(@)(@@) % عذيري من طوالع في عذاري ، % ومن رد الشباب المستعار ! % 2(@)(@@) % و ثوب ، كنت ألبسه ، أنيق % أجرر ذيله ، بين الجواري % % 3(@)(@@) % و ما زادت على العشرين سني % % فما عذر المشيب إلى عذاري ؟ % 4(@)(@@) % و ما استمتعت من داعي التصابي % % إلى أن جاءني داعي الوقار % % 5(@)(@@) % أيا شيبي ، ظلمت ! ويا شبابي % % لقد جاورت ، منك ، بشر جار ! % 6(@)(@@) % يرحل كل من يأوي إليه % و يختمها بترحيل الديار % 7(@)(@@) % أمرت بقصه ، وكففت عنه ، % وقر على تحمله قراري % % 8(@)(@@) % وقلت : الشيب أهون ما ألاقي % % من الدنيا وأيسر ما أداري ! % 9(@)(@@) % ولا يبقى رفيقي الفجر حتى % % يضم إليه منبلج النهار ' % 10(@)(@@) % ' و إني ما فجعت به لألقى % % به ملقى العثار من الشعار ' % PageV01P180 11(@)(@@) % و كم من زائر بالكره مني % % كرهت فراقه بعد المزار ! % 12(@)(@@) % متى أسلو بلا خل وصول % يوافقني ، ولا قدح مدار ؟ % 13(@)(@@) % و كنت ، إذا الهموم تناوبتني ، % فزعت من الهموم إلى القفار % 14(@)(@@) % أنخت وصاحباي بذي طلوح % طلائح ، شفها وخد القفار % 15(@)(@@) % ولا ماء سوى نطف الأداوي ، % ولا زاد سوى القنص المثار % 16(@)(@@) % فلما لاح بعد الأين سلع ، % ذكرت منازلي وعرفت داري % % 17(@)(@@) % ألم بنا ، وجنح الليل داج ، % خيال زار وهنا من نوار % 18(@)(@@) % أباخلة علي ، وأنت جار ، % وواصلة على بعد المزار ! % 19(@)(@@) % تلاعب بي ، على هوج المطايا ، % خلائق لا تقر على الصغار % 20(@)(@@) % و نفس ، دون مطلبها الثريا % % وكف دونها فيض البحار % PageV01P181 21(@)(@@) % أرى نفسي تطالبني بأمر % قليل ، دون غايته 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms38# ، اقتصاري % % 22(@)(@@) % و ما يغنيك من همم طوال % إذا قرنت بأعمار قصار ؟ % 23(@)(@@) % ومعتكف على حلب بكي ، % يقوت عطاش آمال غزار % 24(@)(@@) % يقول لي : ' انتظر فرجا ' ومن لي % % بأن الموت ينتظر انتظاري ؟ ! % 25(@)(@@) % علي لكل هم ، كل عيس % أمون الرحل موخدة القفار % 26(@)(@@) % وخراج من الغمرات خرق ، % أبو شبلين ، محمي الذمار % 27(@)(@@) % شديد تجنب الآثام واف ، % على علاته ، عف الإزار % 28(@)(@@) % فلا نزلت بي الجيران إن لم % أجاورها مجاورة البحار % 29(@)(@@) % % أصاحبها بمأمون الفرار % 30(@)(@@) % ولا صحبتني الأملاك إن لم % أصبحها بملتف الغبار % PageV01P182 31(@)(@@) % بجيش لا يحل بهم مغير % ورأي لا يغبهم مغار % 32(@)(@@) % شددت على الحمامة كور رحل % بعيد حله ، دون اليسار % 33(@)(@@) % تحف به الأسنة ، والعوالي ، % و مضمرة المهاري ، والمهاري % % 34(@)(@@) % يعدن ، بعيد طول الصون ، سعيا % لما كلفن من بعد المغار % 35(@)(@@) % و تخفق حولي الرايات حمرا ، % وتتبعني الخضارم من ' نزار ' % 36(@)(@@) % وإن طرقت بداهية نآد % تدافعها الرجال بكل جار % 37(@)(@@) % عزيز حيث حط السير رحلي ، % تداريني الأنام ولا أداري ! % 38(@)(@@) % و أهلي من أنخت إليه عيسي ، % وداري حيث كنت من الديار % PageV01P183 البحر : هزج 1(@)(@@) % تواعدنا بآذار % لمسعى غير مختار % 2(@)(@@) % وقمنا ، نسحب الريط ، % إلى حانة خمار ؛ % 3(@)(@@) % فلم ندر ، وقد فاحت % لنا من جانب الدار % 4(@)(@@) % بخمار ، من القوم ، % نزلنا ، أم بعطار ؟ % 5(@)(@@) % فلما ألبس الليل ، % لنا ثوبا من القار % 6(@)(@@) % وقلنا : أوقد النار % لطراق وزوار % 7(@)(@@) % وجا خاصرة الدن % فأغنانا عن النار % 8(@)(@@) % وما في طلب اللهو ، % على الفتيان ، من عار ! % PageV01P184 البحر : وافر تام 1(@)(@@) % صبرت على اختيارك واضطراري % % وقل ، مع الهوى ، فيك انتصاري % % 2(@)(@@) % و كان يعاف حمل الضيم قلبي ، % فقر على تحمله قراري % % 3(@)(@@) % فديتك ، طال ظلمك واحتمالي % % كما كثرت ذنوبك واعتذاري % % PageV01P185 البحر : مجزوء الكامل 1(@)(@@) % ما آن أن أرتاع للش % % يب ، المفوف في عذاري ؟ % 2(@)(@@) % وأكف عن سبل الضلا % % ل ، وأكتسي ثوب الوقار % 3(@)(@@) % أم قد أمنت الحادثا % % ت من الغوادي والسواري % % 4(@)(@@) % إني أعوذ ، بحسن عف % % و الله ، من سوء اختياري % % PageV01P186 البحر : مجزوء الرمل 1(@)(@@) % هل ترى النعمة دامت % لصغير أو كبير ؟ % 2(@)(@@) % أو ترى أمرين جاءا % % أولا مثل أخير % 3(@)(@@) % إنما تجري التصاري % % ف بتقليب الدهور % 4(@)(@@) % ففقير من غني ؛ % وغني من فقير ! % PageV01P187 البحر : كامل تام 1(@)(@@) % من 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms39# أين للرشإ ، الغرير ، الأحور ، % في الخد ، مثل عذاره المتحدر ؟ ! % 3(@)(@@) % قمر ، كأن بعارضيه كليهما % % مسكا ، تساقط فوق ورد أحمر % PageV01P188 البحر : بسيط تام 1(@)(@@) % ووارد مورد أنسا ، يؤكده % صدوره عن سليم الورد والصدر % 2(@)(@@) % شدت سحائبه منه على نزه % تقسم الحسن بين السمع والبصر % 3(@)(@@) % عذوبة ، صدرت عن منطق جدد ؛ % كالماء يخرج ينبوعا من الحجر % 4(@)(@@) % وروضة من رياض الفكر ، دبجها % % صوب القرائح لا صوب من المطر % 5(@)(@@) % كأنما نشرت أيدي الربيع بها % % بردا من الوشي أو ثوبا من الحبر % PageV01P189 البحر : متقارب تام 1(@)(@@) % ولي منة في رقاب الضباب ، % وأخرى تخص بني جعفر % 2(@)(@@) % عشية روحن من ' عرقة ' % وأصبحن فوضى ، على شيزر % 3(@)(@@) % وقد طال ما وردت ' بالجباة ' % وعاودت الماء في تدمر % 4(@)(@@) % قددن البقيعة ، قد الأدي % % م ، والغرب في شبه الأشقر % 5(@)(@@) % و جاوزن ' حمص ' ؛ فلم ينتظر % ن على مورد أو على مصدر % 6(@)(@@) % وبالرستن استلبت موردا ، % كورد الحمامة أو أنزر % 7(@)(@@) % وجزن المروج ، وقرني حماة % و ' شيزر ' ، والفجر لم يسفر % 8(@)(@@) % و غامضت الشمس إشراقها % % فلفت كفرطاب بالعسكر % 9(@)(@@) % ولاقت بها عصب الدارعي % % ن بكل منيع الحمى مسعر % 10(@)(@@) % على كل سابقة بالرديف ، % وكل شبيه بها مجفر % PageV01P190 11(@)(@@) % و لما اعتفرن ولما عرقن % خرجن ، سراعا ، من العثير % 12(@)(@@) % ننكب عنهن فرسانهن ، % ونبدأ بالأخير الأخير % 13(@)(@@) % فلما سمعت ضجيج النسا % % ء ناديت : ' حار ' ، ألا فاقصر ! % 14(@)(@@) % أ ' حارث ' من صافح ، غافر % لهن ، إذا أنت لم تغفر ؟ ! % 15(@)(@@) % رأى ابن عليان ما سره % فقلت : رويدك لا تسرر ! % 16(@)(@@) % فإني أقوم بحق الجوا % % ر ثم أعود إلى العنصر % PageV01P191 البحر : طويل 1(@)(@@) % و يوم جلا فيه الربيع بياضه % بأنواع حلي ، فوق أثوابه الخضر % 2(@)(@@) % كأن ذيول الجلنار ، مطلة ، % فضول ذيول الغانيات من الأزر % PageV01P192 البحر : طويل 1(@)(@@) % ووالله ، ما أضمرت في الحب سلوة ، % ووالله ، ماحدثت نفسي بالصبر % 2(@)(@@) % و إنك في عيني ، لأبهى من الغنى ، % وإنك ، في قلبي ، لأحلى من النصر % 3(@)(@@) % فيا حكمي المأمول جرت مع الهوى ! % وياثقتي المأمون ، خنت مع الدهر ! % PageV01P193 البحر : طويل 1(@)(@@) % سأثني على تلك الثنايا ، لأنني % % أقول على علم ، وأنطق عن خبر % 2(@)(@@) % و أنصفها ، لا أكذب الله ، أنني % % PageV01P194 البحر : بسيط تام 1(@)(@@) % يا طيب ليلة ميلاد ، لهوت بها 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms40# % % بأحور ، ساحر العينين ، ممكور % 2(@)(@@) % والجو ينشر درا ، غير منتظم ، % والأرض بارزة في ثوب كافور % 3(@)(@@) % والنرجس الغض يحكي حسن منظره % صفراء صافية في كأس بلور % PageV01P195 البحر : وافر تام 1(@)(@@) % ولي في كل يوم منك عتب ولي في كل يوم منك عتب % أقوم به مقام الاعتذار % 2(@)(@@) % حملت جفاك ، لا جلدا ، ولكن % صبرت على اختيارك واضطراري % % PageV01P196 البحر : وافر تام 1(@)(@@) % جنى جان ، وأنت عليه حان ، % وعاد ، فعدت بالكرم الغزير % 2(@)(@@) % صبرت عليه حتى جاء ، طوعا ، % إليك ، وتلك عاقبة الصبور % 3(@)(@@) % فإن تك عدلة في الجسم كانت % فما عدل الضمير عن الضمير % 4(@)(@@) % و مثل ' أبي فراس ' من تجافى % % له عن فعله ، مثل الأمير % PageV01P197 البحر : طويل 1(@)(@@) % بكيت ، فلما لم أر الدمع نافعي ، % رجعت إلى صبر ، أمر من الصبر % 2(@)(@@) % و قدرت أن الصبر ، بعد فراقهم ، % يساعدني ، وقتا ، فعزيت عن صبري % % PageV01P198 البحر : كامل تام 1(@)(@@) % ما زال معتلج الهموم بصدره % حتى أباحك ما طوى من سره % 2(@)(@@) % أضمرت حبك ، والدموع تذيعه ، % و طويت وجدك ، والهوى في نشره % 3(@)(@@) % ترد الدموع ، لما تجن ضلوعه ، % تترى إلى وجناته أو نحره % 4(@)(@@) % من لي بعطفة ظالم ، من شأنه % نسيان مشتغل اللسان بذكره ؟ % 5(@)(@@) % يا ليت مؤمنه سلوى - ما دعت % ورق الحمام - مؤمني من هجره % 6(@)(@@) % من لي برد الدمع ، قسرا ، والهوى % % يغدو عليه ، مشمرا ، في نصره ؟ % 7(@)(@@) % أعيا علي أخ ، وثقت بوده ، % وأمنت في الحالات عقبى غدره % 8(@)(@@) % وخبرت هذا الدهر خبرة ناقد % حتى أنست بخيره وبشره % 9(@)(@@) % لا أشتري بعد التجرب صاحبا % إلا وددت بأنني لم أشره % 10(@)(@@) % من كل غدار يقر بذنبه % فيكون أعظم ذنبه في عذره % PageV01P199 11(@)(@@) % ويجيء ، طورا ، ضره في تفعه ، % جهلا ، وطورا ، نفعه في ضره % % 12(@)(@@) % فصبرت لم أقطع حبال وداده % و سترت منه ، مااستطعت ، بستره % 13(@)(@@) % وأخ أطعت فما رأى لي طاعتي % % حتى خرجت ، بأمره ، عن أمره % 14(@)(@@) % و تركت حلو العيش لم أحفل به % لما رأيت أعزه في مره % % 15(@)(@@) % والمرء ليس ببالغ في أرضه ، % كالصقر ليس بصائد في وكره % 16(@)(@@) % أنفق من الصبر الجميل ، فإنه % لم يخش فقرا منفق من صبره % 17(@)(@@) % واحلم وإن سفه الجليس ، وقل له % حسن المقال إذا أتاك بهجره 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms41# % 18(@)(@@) % وأحب إخواني إلي أبشهم % % بصديقه في سره أو جهره % 19(@)(@@) % لا خير في بر الفتى ما لم يكن % أصفى مشارب بره في بشره % 20(@)(@@) % ألقى الفتى فأريد فائض بشره % و أجل أن أرضى بفائض بره % PageV01P200 21(@)(@@) % يارب مضطغن الفؤاد ، لقيته % بطلاقة ، فسللت ما في صدره % PageV01P201 البحر : طويل 1(@)(@@) % و ما كنت أخشى أن أبيت وبيننا % % خليجان و ' الدرب ' الأشم و ' آلس ' % 2(@)(@@) % ولا أنني أستصحب الصبر ساعة % ولي عنك مناع ودونك حابس % 3(@)(@@) % ينافسني فيك الزمان وأهله % وكل زمان لي عليك منافس % 4(@)(@@) % شريتك من دهري بذي الناس كلهم % % فلا أنا مبخوس ولا الدهر باخس % 5(@)(@@) % وملكتك النفس النفيسة طائعا ، % و تبذل للمولى النفوس النفائس % 6(@)(@@) % تشوقني الأهل الكرام وأوحشت % مواكب بعدي عندهم ومجالس % 7(@)(@@) % وربتما زان الأماجد ماجد ، % وربتما زان الفوارس فارس ! % 8(@)(@@) % رفعت على الحساد نفسي ؛ وهل هم % و ما جمعوا لو شئت إلا فرائس ؟ % 9(@)(@@) % أيدرك ما أدركت إلا ابن همة % يمارس في كسب العلى ما أمارس ؟ % 10(@)(@@) % يضيق مكاني عن سواي لأنني % % على قمة المجد المؤثل جالس % PageV01P202 11(@)(@@) % سبقت وقومي بالمكارم والعلا % و إن زعمت من آخرين المعاطس % PageV01P203 البحر : بسيط تام 1(@)(@@) % سقى ثرى ' حلب ' ما دمت ساكنها % % يا بدر ، غيثان منهل ومنبجس % 2(@)(@@) % أسير عنها وقلبي في المقام بها ، % كأن مهري لثقل السير محتبس % 3(@)(@@) % هذا ولولا الذي في قلب صاحبه % من البلابل لم يقلق به فرس % 4(@)(@@) % كأنما الأرض والبلدان موحشة ، % و ربعها دونهن العامر الأنس % 5(@)(@@) % مثل الحصاة التي يرمى بها أبدا % إلى السماء فترقى ثم تنعكس % PageV01P204 البحر : بسيط تام 1(@)(@@) % لمن أعاتب ؟ ما لي ؟ أين يذهب بي ؟ % قد صرح الدهر لي بالمنع والياس % 2(@)(@@) % أبغي الوفاء بدهر لا وفاء له ، % كأنني جاهل بالدهر والناس ! % PageV01P205 البحر : كامل تام 1(@)(@@) % لما رأت أثر السنان بخده % ظلت تقابله بوجه عابس ! % 2(@)(@@) % خلف السنان به موقع لثمها ، % بئس الخلافة للمحب البائس ! % PageV01P206 البحر : كامل تام 1(@)(@@) % ما أنس قولتهن ، يوم لقينني : % ' أزرى السنان بوجه هذا البائس ! ' % 2(@)(@@) % قالت لهن ، وأنكرت ما قلنه : % أجميعكن على هواه منافسي ؟ % 3(@)(@@) % إني ليعجبني ، إذا عاينته ، % أثر السنان بصحن خد الفارس % PageV01P207 البحر : كامل تام 1(@)(@@) % المرء رهن مصائب لا 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms42# تنقضي % % حتى يوارى جسمه في رمسه % 2(@)(@@) % فمؤجل يلقى الردى في أهله ، % ومعجل يلقى الردى في نفسه % PageV01P208 البحر : مخلع البسيط 1(@)(@@) % تناهض القوم للمعالي % % لما رأوا نحوها نهوضي % % 2(@)(@@) % تكلفوا المكرمات ، كدا ، % تكلف الشعر بالعروض % PageV01P209 البحر : هزج 1(@)(@@) % أيا قلبي ، أما تخشع ؟ % ويا علمي ، أما تنفع ؟ % 2(@)(@@) % أما حقي بأن أنظ % % ر للدنيا ، وما تصنع ؟ % 3(@)(@@) % أما شيعت أمثالي % % إلى ضيق من المضجع % 4(@)(@@) % أما أعلم أن لا ب % % د لي من ذلك المصرع ؟ % 5(@)(@@) % أيا غوثاه ، يا الل % % ه هذا الأمر ما أفظع ! ! % PageV01P210 البحر : طويل 1(@)(@@) % أبى غرب هذا الدمع إلا تسرعا % % ومكنون هذا الحب إلا تضوعا % % 2(@)(@@) % وكنت أرى أني مع الحزم واحد ، % إذا شئت لي ممضى وإن شئت مرجعا % % 3(@)(@@) % فلما استمر الحب في غلوائه ، % رعيت مع المضياعة الحب ما رعى % % 4(@)(@@) % فحزني حزن الهائمين مبرحا ، % و سري سر العاشقين مضيعا % % 5(@)(@@) % خليلي ، لم لا تبكياني صبابة ، % أأبدلتما بالأجرع الفرد أجرعا ؟ % 6(@)(@@) % علي ، لمن ضنت علي جفونه % غوارب دمع يشمل الحي أجمعا % % 7(@)(@@) % وهبت شبابي ، والشباب مضنة ، % لأبلج من أبناء عمي ، أروعا ! % 8(@)(@@) % أبيت ، معنى ، من مخافة عتبه ، % و أصبح ، محزونا ، وأمسي ، مروعا ! % 9(@)(@@) % فلما مضى عصر الشبيبة كله ، % وفارقني شرخ الشباب ، مودعا % % 10(@)(@@) % تطلبت بين الهجر والعتب فرجة ، % فحاولت أمرا ، لا يرام ، ممنعا % % PageV01P211 13(@)(@@) % وصرت إذا ما رمت في الخير لذة % تتبعتها بين الهموم ، تتبعا % % 14(@)(@@) % وها أنا قد حلى الزمان مفارقي ، % و توجني بالشيب تاجا مرصعا % % 15(@)(@@) % فلو أنني مكنت مما أريده % من العيش ، يوما ، لم يجد في موضعا ! % 16(@)(@@) % أما ليلة تمضي ولا بعض ليلة ! % أسر بها هذا الفؤاد المفجعا ؟ % 17(@)(@@) % أما صاحب فرد يدوم وفاؤه ! % فيصفي لمن أصفى ويرعى لمن رعى ؟ % 18(@)(@@) % أفي كل دار لي صديق أوده ، % إذا ما تفرقنا حفظت وضيعا ؟ % 19(@)(@@) % أقمت بأرض الروم ، عامين ، لا أرى % % من الناس محزونا ولا متصنعا % % 20(@)(@@) % إذا خفت من أخوالي الروم خطة % تخوفت من أعمامي العرب أربعا % % 21(@)(@@) % و إن أوجعتني من أعادي شيمة % لقيت من الأحباب أدهى وأوجعا % % 22(@)(@@) % ولو قد رجوت الله لا شيء غيره % رجعت إلى أعلى وأملت أوسعا % % PageV01P212 23(@)(@@) % لقد قنعوا بعدي من القطر بالندى ، % و من لم 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms43# يجد إلا القنوع تقنعا % % 24(@)(@@) % و ما مر إنسان فأخلف مثله ؛ % ولكن يزجي الناس أمرا موقعا % % 25(@)(@@) % تنكر ' سيف الدين ' لما عتبته ، % وعرض بي ، تحت الكلام ، وقرعا % % 26(@)(@@) % فقولا له : من أصدق الود أنني % % جعلتك مما رابني ، الدهر مفزعا % % 27(@)(@@) % و لو أنني أكننته في جوانحي % % لأورق ما بين الضلوع وفرعا % % 28(@)(@@) % فلا تغترر بالناس ، ما كل من ترى % % أخوك إذا أوضعت في الأمر أوضعا % % 29(@)(@@) % ولا تتقلد ما يروعك حليه % تقلد ، إذا حاربت ، ما كان أقطعا ! % 30(@)(@@) % ولا تقبلن القول من كل قائل ! % سأرضيك مرأى لست أرضيك مسمعا % % 31(@)(@@) % % و لله صنع قد كفاني التصنعا % % 32(@)(@@) % أراني طريق المكرمات ، كما أرى ، % علي وأسماني على كل من سعى % % PageV01P213 33(@)(@@) % فإن يك بطء مرة فلطالما % % تعجل ، نحوي ، بالجميل وأسرعا % % 34(@)(@@) % و إن يحف في بعض الأمور فانني % % لأشكره النعمى التي كان أودعا % % 35(@)(@@) % و إن يستجد الناس بعدي فلم يزل % بذاك البديل ، المستجد ، ممتعا ! % PageV01P214 البحر : بسيط تام 1(@)(@@) % و ما تعرض لي يأس سلوت به % إلا تجدد لي في إثره طمع % 2(@)(@@) % و لا تناهبت في شكوى محبته % إلا وأكثر مما قلت ما أدع % PageV01P215 البحر : مجزوء الكامل 1(@)(@@) % ما للعبيد من الذي % % يقضي به الله امتناع % 2(@)(@@) % ذدت الأسود عن الفرا % % ئس ، ثم تفرسني الضباع % PageV01P216 البحر : سريع 1(@)(@@) % المجد بالرقة مجموع ، % والفضل مرئي ومسموع % 2(@)(@@) % إن بها كل عميم الندى % % يداه للجود ينابيع % 3(@)(@@) % و كل مبذول القرى ، بيته ، % على علا العلياء ، ، مرفوع % % 4(@)(@@) % لكن أتاني خبر رائع % يضيق عنه السمع والروع % 5(@)(@@) % أن بني عمي ، وحاشاهم ، % شعبهم بالخلف مصدوع % % 6(@)(@@) % مالعصا قومي قد شقها % % تفارط منهم وتضييع ؟ % 7(@)(@@) % بني أبي ، فرق ما بينكم % واش ، على الشحناء مطبوع ! % 8(@)(@@) % عودوا إلى أحسن ما كنتم ، % فأنتم الغر المرابيع ! % 9(@)(@@) % لا يكمل السؤدد في ماجد ، % ليس له عود ومرجوع % % 10(@)(@@) % أنبذل الود لأعدائنا ، % و هو عن الإخوة ممنوع ؟ ! % PageV01P217 11(@)(@@) % أو نصل الأبعد من قومنا ، % والنسب الأقرب مقطوع ؟ % 12(@)(@@) % لا يثبت العز على فرقة ، % غيرك بالباطل مخدوع ! % PageV01P218 البحر : طويل 1(@)(@@) % هي الدار من سلمى وهاتي المرابع ، % فحتى متى ياعين ، دمعك هامع ؟ ! % 2(@)(@@) % ألم ينهك الشيب الذي حل نازلا ؟ % وللشيب بعد الجهل للمرء رادع ! % 3(@)(@@) % لئن 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms44# وصلت ' سلمى ' حبال مودتي % % فإن وشيك البين ، لا شك ، قاطع % 4(@)(@@) % و إن حجبت عنا النوى ' أم مالك ' % لقد ساعدتها كلة وبراقع ! % 5(@)(@@) % و إن ظمئت نفسي إلى طيب ريقها % % لقد رويت بالدمع مني المدامع % 6(@)(@@) % وإن أفلت تلك البدور عشية ، % فإن نحوسي بالفراق طوالع % 7(@)(@@) % ولما وقفنا للوداع ، غدية ، % أشارت إلينا أعين وأصابع % 8(@)(@@) % وقالت : أتنسى العهد بالجزع واللوى % % و ما ضمه منا النقا والأجارع ؟ % 9(@)(@@) % وأجرت دموعا من جفون لحاظها % % شفار ، على قلب المحب قواطع % % 10(@)(@@) % فقلت لها : مهلا ! فماالدمع رائعي ، % وما هو للقرم المصمم رائع ! % PageV01P219 11(@)(@@) % لئن لم أخل العيس وهي لواغب % حدابير ، من طول السرى ، وظوالع % 12(@)(@@) % فما أنا من ' حمدان ' في الشرف الذي % % له منزل بين السماكين طالع % % PageV01P220 البحر : كامل تام 1(@)(@@) % و لقد أبيت ، وجل ما أدعو به ، % حتى الصباح ، وقد أقض المضجع % 2(@)(@@) % لا هم ، إن أخي لديك وديعة % مني وليس يضيع ما تستودع ! % PageV01P221 البحر : سريع 1(@)(@@) % محلك الجوزاء ، بل أرفع ، % وصدرك الدهناء ، بل أوسع % 2(@)(@@) % وقلبك الرحب الذي لم يزل ، % للجد والهزل ، به موضع % 3(@)(@@) % رفه بقرع العود سمعا ، غدا % % قرع العوالي جل ما يسمع % PageV01P222 البحر : طويل 1(@)(@@) % لئن جمعتنا ، غدوة ، أرض ' بالس ' % فإن لها عندي يدا لا أضيعها % % 2(@)(@@) % أحب بلاد الله ، أرض تحلها ، % إلي ؛ ودار تحتويك ربوعها % % 3(@)(@@) % أفي كل يوم ، رحلة بعد رحلة % تجرع نفسي ، حسرة ، وتروعها ؟ % 4(@)(@@) % فلي ، أبدا ، قلب كثير نزاعه ، % ولي ، أبدا ، نفس قليل نزوعها % % 12(@)(@@) % لحى الله قلبا لا يهيم صبابة % إليك ، وعينا لا تفيض دموعها % % PageV01P223 البحر : مجزوء الكامل 1(@)(@@) % أنظر إلى زهر الربيع ، % و الماء في برك البديع ، % 2(@)(@@) % و إذا الرياح جرت علي % % ه في الذهاب وفي الرجوع ، % 3(@)(@@) % نثرت على بيض الصفا % % ئح بيننا حلق الدروع % PageV01P224 البحر : خفيف تام 1(@)(@@) % كيف أرجو الصلاح من أمر قوم % ضيعوا الحزم فيه أي ضياع ؟ % 2(@)(@@) % فمطاع المقال غير سديد ، % وسديد المقال غير مطاع % PageV01P225 البحر : مجزوء الكامل 1(@)(@@) % من بحر شعرك أغترف ، % و بفضل علمك أعترف % 2(@)(@@) % أنشدتني ؛ فكأنما % % شققت عن در صدف % 3(@)(@@) % شعرا ، إذا ما قسته % بجميع أشعار السلف % 4(@)(@@) % قصرن ، دون قراه تق % % صير الحروف عن الألف % PageV01P226 البحر : مجزوء الكامل 1(@)(@@) % إني 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms45# أقول بما علمت % ولا أجور ولا أخيف % 2(@)(@@) % أما علي الجعفري % ي فإنه الحر العفيف % 3(@)(@@) % نسب شريف ، زانه % في أهله خلق شريف % PageV01P227 البحر : طويل 1(@)(@@) % أيا ظالما ، أمسى يعاتب منصفا ! % أتلزمني ذنب المسيء تعجرفا ؟ % 2(@)(@@) % بدأت بتنميق العتاب ، مخافة ال % % عتاب ، وذكري بالجفا ، خشية الجفا ! % 3(@)(@@) % أوافي ، على علات عتبك ، صابرا % وألفى ، على حالات ظلمك ، منصفا % % 4(@)(@@) % و كنت ، إذا صافيت خلا ، منحته % بهجرانه وصلا ، ومن غدره وفا % % 5(@)(@@) % فهيج بي هذا الكتاب صبابة ، % و جدد لي هذا العتاب تأسفا % % 6(@)(@@) % فإن أدنت الأيام دارا بعيدة % شفى القلب مظلوم من العتب واشتفى ! % 7(@)(@@) % فإن كنته أقررت بالذنب ، تائبا ، % وإن لم أكن أمسكت عنه ، تألفا ! % PageV01P228 البحر : مجزوء الوافر 1(@)(@@) % غلام فوق ما أصف ، % كأن قوامه ألف % 2(@)(@@) % إذا ما مال يرعبني % % أخاف عليه ينقصف % 3(@)(@@) % و أشفق من تأوده ، % أخاف يذيبه الترف % 4(@)(@@) % سروري عنده لمع ، % و دهري ، كله ، أسف % 5(@)(@@) % وأمري ، كله ، أمم ، % وحبي وحده سرف % PageV01P229 البحر : كامل تام 1(@)(@@) % غيري يغيره الفعال الجافي ، % و يحول عن شيم الكريم الوافي % % 2(@)(@@) % لا أرتضي ودا ، إذا هو لم يدم % عند الجفاء ، وقلة الإنصاف % 3(@)(@@) % تعس الحريص ، وقل ما يأتي به % عوضا من الإلحاح والإلحاف % 4(@)(@@) % إن الغني هو الغني بنفسه % ولو أنه عاري المناكب ، حاف % 5(@)(@@) % ما كل ما فوق البسيطة كافيا ، % فإذا قنعت فكل شيء كاف % 6(@)(@@) % وتعاف لي طمع الحريص أبوتي ، % و مروءتي ، وفتوتي ، وعفافي % % 7(@)(@@) % ما كثرة الخيل الجياد بزائدي % % شرفا ، ولا عدد السوام الضافي % % 8(@)(@@) % خيلي ، وإن قلت ، كثير نفعها % % بين الصوارم ، والقنا الرعاف % 9(@)(@@) % و مكارمي عدد النجوم ؛ ومنزلي % % مأوى الكرام ، ومنزل الأضياف % 10(@)(@@) % لا أقتني لصروف دهري عدة % حتى كأن صروفه أحلافي % % PageV01P230 11(@)(@@) % شيم عرفت بهن ، مذ أنا يافع ، % ولقد عرفت بمثلها أسلافي % % PageV01P231 البحر : مجزوء الرجز 1(@)(@@) % و مرتد بطرة ، % مسبلة الرفارف % 2(@)(@@) % كأنها مرسلة % من زرد مضاعف % PageV01P232 البحر : بسيط تام 1(@)(@@) % بعض الجفاة إلى المجفو مشتاق % ودون ما أمل المعشوق معتاق % 2(@)(@@) % أعصي الهوى ، وأطيع الرأي في ولد % بعد النصيحة رابت منه أخلاق % 3(@)(@@) % فما نظرت بعين السوء معتمدا % إليه إلا وللأحشاء إطراق % 4(@)(@@) % و ما دعاني إلى ما ساءه سخط % إلا ثناني إلى 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms46# ما شاء إشفاق % PageV01P233 البحر : بسيط تام 1(@)(@@) % الحزن مجتمع ، والصبر مفترق ، % و الحب مختلف ، عندي ومتفق % 2(@)(@@) % ولي ، إذا كل عين نام صاحبها ، % عين تحالف فيها الدمع والأرق % 3(@)(@@) % لولاك يا ظبية الإنس ، التي نظرت ، % لما وصلن إلى مكروهي الحدق % 4(@)(@@) % لكن نظرت ، وقد سار الخليط ضحى ، % بناظر كل حسن منه مسترق % PageV01P234 البحر : وافر تام 1(@)(@@) % و لما عز دمع العين فاضت % دماء ، عند ترحال الفريق % 2(@)(@@) % وقد نظمت على خدي سموطا % من الدر المفصل بالعقيق % PageV01P235 البحر : - 1(@)(@@) % يا أخي قد وهبت ذنب زمان % طرقتني صروفه بالمهالك % 2(@)(@@) % لم يهب لي صبابة من رقاد % لم يجد لي فيها بطيف خيالك % 3(@)(@@) % قد قنعنا بذلك النزر منه ، % وغفرنا له الذنوب لذلك % PageV01P236 البحر : خفيف تام 1(@)(@@) % يا غلامي ، بل سيدي ، لن أملك ، % هب لمولاك ، لا عدمتك ، عدلك % 2(@)(@@) % خوف أن يصطفيك غيري بعدي % % لا أرى أن أقول قدمت قبلك % PageV01P237 البحر : مجزوء الكامل 1(@)(@@) % بالكره مني واختيارك ، % أن لا أكون حليف دارك % 2(@)(@@) % يا تاركي ، إني لذك % رك ، ما حييت ، لغير تارك ! % 3(@)(@@) % كن كيف شئت ، فإنني % % ذاك المواسي والمشارك % PageV01P238 البحر : سريع 1(@)(@@) % أليك أشكو منك ، يا ظالمي ، % إذ ليس ، في العالم ، معد عليك % 2(@)(@@) % أعانك الله بخير ، أعن % من ليس يشكو منك إلا إليك % PageV01P239 البحر : متقارب تام 1(@)(@@) % أيا سافرا ! ورداء الخجل % مقيم بوجنته ، لم يزل ! % 2(@)(@@) % بعيشك ، رد عليك اللثام ! % أخاف عليك جراح المقل % 3(@)(@@) % فما حق حسنك أن يجتلى ، % ولا حق وجهك أن يبتذل % 4(@)(@@) % أمنت عليك صروف الزمان ، % كما قد أمنت علي الملل % PageV01P240 البحر : مجتث 1(@)(@@) % ما زلت تسعى بجد ، % برغم شانيك ، مقبل % 2(@)(@@) % ترى لنفسك أمرا ، % و ما يرى الله أفضل % % PageV01P241 البحر : سريع 1(@)(@@) % قد عذب الموت بأفواهنا % % والموت خير من مقام الذليل % 2(@)(@@) % إنا إلى الله ، لما نابنا ، % و في سبيل الله خير السبيل ! % PageV01P242 البحر : مجزوء الكامل 1(@)(@@) % قف في رسوم المستجا % % ب وحي أكناف المصلى ! % 2(@)(@@) % ف ' الجوسق ' الميمون ، ف ' الس % % قيا ' بها ، فالنهر أعلى ! % 3(@)(@@) % تلك المنازل ، والملا % % عب ، لا أراها الله محلا ! % 4(@)(@@) % أوطنتها زمن الصبا ؛ % وجعلت منبج لي محلا % 6(@)(@@) % حيث التفت رأيت ما % % ء سابحا ، وسكنت ظلا % 7(@)(@@) % تر دار ' وادي عين 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms47# قا % % صر ' منزلا رحبا ، مطلا % 8(@)(@@) % وتحل بالجسر الجنا % % ن ، وتسكن الحصن المعلى % % 9(@)(@@) % تجلو عرائسه لنا % % هزج الذباب إذا تجلى % % 10(@)(@@) % و إذا نزلنا ب ' السوا % % جير ' اجتنينا العيش سهلا % 11(@)(@@) % والماء يفصل بين زه % % ر الروض ، في الشطين ، فصلا % % PageV01P243 12(@)(@@) % كبساط وشي ، جردت % أيدي القيون عليه نصلا % 13(@)(@@) % من كان سر بما عرا % % ني ، فليمت ضرا وهزلا % 14(@)(@@) % لم أخل ، فيما نابني ، % من أن أعز ، وأن أجلا % 15(@)(@@) % رعت القلوب ، مهابة ، % وملأتها ، فضلا ونبلا % 16(@)(@@) % ما غض مني حادث ؛ % والقرم قرم ، حيث حلا % 17(@)(@@) % أنى حللت فإنما % % يدعوني السيف المحلى % % 18(@)(@@) % فلئن خلصت فإنني % % شرق العدا ، طفلا وكهلا % 19(@)(@@) % ما كنت إلا السيف ، زا % % د على صروف الدهر صقلا % 20(@)(@@) % ولئن قتلت ، فإنما % % موت الكرام الصيد قتلا % 24(@)(@@) % يغتر بالدنيا الجهو % % ل ، وليس في الدنيا مملا ! % PageV01P244 البحر : مجزوء الرمل 1(@)(@@) % أجملي يا أم عمر و ، % زادك الله جمالا % 2(@)(@@) % لا تبيعيني برخص ؛ % إن في مثلي يغالى ! % 3(@)(@@) % أنا ، إن جدت بوصل ، % أحسن العالم حالا ! % PageV01P245 البحر : كامل تام 1(@)(@@) % أأبا العشائر ، إن أسرت فطالما % % أسرت لك البيض الخفاف رجالا ! % 2(@)(@@) % لما أجلت المهر ، فوق رؤوسهم ، % نسجت له حمر الشعور عقالا % 3(@)(@@) % يا من إذا حمل الحصان على الوجى % % قال : اتخذ حبك التريك نعالا % 4(@)(@@) % ما كنت نهزة آخذ ، يوم الوغى ، % لو كنت أوجدت الكميت مجالا % 5(@)(@@) % حملتك نفس حرة وعزائم ، % قصرن من قلل الجبال طوالا % 6(@)(@@) % ورأين بطن العير ظهر عراعر ، % والروم وحشا ، والجبال رمالا % 7(@)(@@) % أخذوك في كبد المضايق ، غيلة ، % مثل النساء ، تربب الرئبالا % 8(@)(@@) % ألا دعوت أخاك ، وهو مصاقب % يكفي العظيم ، ويدفع ، الأهوالا ؟ % 9(@)(@@) % ألا دعوت أبا فراس ، إنه % ممن إذا طلب الممنع نالا ؟ % 10(@)(@@) % وردت ، بعيد الفوت ، أرضك خيله ، % سرعى ، كأمثال القطا أرسالا % PageV01P246 11(@)(@@) % زلل من الأيام فيك ، يقيله % ملك إذا عثر الزمان أقالا % 12(@)(@@) % ما زال ' سيف الدولة ' القرم ، الذي % % يلقى العظيم ، ويحمل الأثقالا % 13(@)(@@) % بالخيل ضمرا ، والسيوف قواضبا ، % و السمر لدنا ، والرجال عجالا % 14(@)(@@) % ومعود فك العناة ، معاود % قتل العداة ، إذا استغار أطالا % 15(@)(@@) % صفنا ' بخرشنة ' وقطعنا الشتا ، % و بنو البوادي في ' قمير ' حلالا % 16(@)(@@) % وسمت بهم همم إليك منيفة % لكنه حجر الخليج وجالا % 17(@)(@@) % وغدا تزورك بالفكاك 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms48# خيوله ، % متثاقلات ، تنقل الأبطالا % 18(@)(@@) % إن ابن عمك ليس يغفل ، إنه % ملك الملوك ، وفكك الأغلالا ! % PageV01P247 البحر : مجزوء الكامل 1(@)(@@) % في الناس إن فتشتهم ، % من لا يعزك أو تذله % 2(@)(@@) % فاترك مجاملة اللئي % % م ، فإن فيها العجز كله % PageV01P248 البحر : وافر تام 1(@)(@@) % أيا عجبا لأمر ' : بني قشير ' ! % أراعونا ؛ وقالوا القوم قل % 2(@)(@@) % وكانوا الكثر ، يومئذ ؛ ولكن % % كثرنا ، إذ تعاركنا ، وقلوا % % 3(@)(@@) % وقال الهام للأجساد : هذا % % يفرق يننا إن لم تولوا ! % 4(@)(@@) % فولوا ، للقنا والبيض فيهم % وفي جيرانهم نهل وعل % 5(@)(@@) % ورحنا بالقلائع ، كل نهد % مطل ، فوقه نهد مطل % PageV01P249 البحر : بسيط تام 1(@)(@@) % يا عمر الله سيف الدين مغتبطا ، % فكل حادثة يرمى بها جلل % 2(@)(@@) % من كان من كل مفقود لنا بدلا % فليس منه على حالاته بدل % 3(@)(@@) % يبكي الرجال ، و ' سيف الدين ' مبتسم ، % حتى عن ابنك تعطى الصبر ، يا جبل % 4(@)(@@) % لم يجهل القوم منه فضل ما عرفوا % % لكن عرفت من التسليم ما جهلوا % % 5(@)(@@) % هل تبلغ القمر المدفون رائعة % من المقال ، عليها للأسى حلل ؟ % 6(@)(@@) % ما بعد فقدك ، في أهل ، ولا ولد ، % و لا حياة ، ولا دنيا ، لنا ، أمل % 7(@)(@@) % يا من أتته المنايا ، غير حافلة ! % أين العبيد وأين الخيل والخول ؟ % 8(@)(@@) % أين الليوث ، التي حوليك ، رابضة ؟ % أين الصنائع ؟ أين الأهل ؟ ما فعلوا ؟ % 9(@)(@@) % أين السيوف التي يحميك أقطعها ؟ % أين السوابق ؟ أين البيض والأسل ؟ % 10(@)(@@) % ياويح خالك ! بل يا ويح كل فتى ! % أكل هذا تخطى ، نحوك ، الأجل ؟ % PageV01P250 البحر : سريع 1(@)(@@) % يا قرح ، لم يندمل الأول ! % فهل بقلبي لكما محمل ؟ % 2(@)(@@) % جرحان ، في جسم ضعيف القوى ، % حيث أصابا فهو المقتل ! % 3(@)(@@) % تقاسم الأيام أحبابنا ، % وقسمها الأفضل والأجمل % 4(@)(@@) % وليتها ، إذ أخذت قسمها ، % عن قسمنا تغمض أو تغفل % 5(@)(@@) % وقيت في الآخر من صرفها ال % % جائر ، ما جرعك الأول % 6(@)(@@) % ففدية المأسور مقبولة ، % وفدية الميت لا تقبل % 7(@)(@@) % لا تعدمن الصبر في حالة ، % فإنه للخلق الأجمل % 8(@)(@@) % وعشت في عز وفي نعمة ، % وجدك المقتبل المقبل % PageV01P251 البحر : طويل 1(@)(@@) % نعم ! تلك ، بين الواديين ، الخواتل % وذلك شاء ، دونهن ، وجامل % 2(@)(@@) % فما كنت ، إذ بانوا ، بنفسك فاعلا % فدونك مت ؛ إن الخليط لزائل % 3(@)(@@) % كأن ابنة القيسي ، في أخواتها ، % خذول ، تراعيها الظباء الخواذل % 4(@)(@@) % قشيرية ، قترية 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms49# ، بدوية ، % لها ، بين أثناء الضلوع ، منازل % 5(@)(@@) % وهبت سلوي ، ثم جئت أرومه ، % ومن دون ما رمت القنا والقنابل % 6(@)(@@) % هوانا غريب ؛ شزب الخيل والقنا % % لنا كتب ، والباترات رسائل % 7(@)(@@) % أغرن على قلبي بخيل من الهوى % % فطارد عنهن الغزال المغازل % 8(@)(@@) % بأسهم لفظ ، لم تركب نصالها ، % و أسياف لحظ ، ما جلتها الصياقل % 9(@)(@@) % وقائع قتلى الحب فيها كثيرة ، % ولم يشتهر سيف ، ولا هز ذابل % 10(@)(@@) % أراميتي ! كل السهام مصيبة ؛ % و أنت لي الرامي ؛ وكلي مقاتل % PageV01P252 12(@)(@@) % وإني لمقدام وعندك هائب ، % وفي الحي ' سحبان ' ؛ وعندك ' باقل ' % 13(@)(@@) % يضل علي القول ، إن زرت دارها ، % ويعزب عني وجه ما أنا فاعل % 14(@)(@@) % وحجتها العليا ، على كل حالة % فباطلها حق ، وحقي باطل % 20(@)(@@) % تطالبني بيض الصوارم والقنا % % بما وعدت حدي في المخايل % 21(@)(@@) % ولا ذنب لي ، إن الفؤاد لصارم ، % و إن الحسام المشرفي لفاصل % 22(@)(@@) % و إن الحصان الوالقي لضامر ، % وإن الأصم السمهري لعاسل % 23(@)(@@) % ولكن دهرا دافعتني خطوبه % كما دفع الدين الغريم المماطل % 24(@)(@@) % و أخلاف أيام ، إذا ما انتجعتها ، % حلبت بكيات ، وهن حوافل % 25(@)(@@) % ولو نيلت الدنيا بفضل منحتها % % فضائل تحويها وتبقى فضائل % 32(@)(@@) % ولكنهما الأيام ، تجري بما جرت ، % فيسفل أعلاها ، ويعلو الأسافل % PageV01P253 33(@)(@@) % لقد قل أن تلقى من الناس مجملا % وأخشى ، قريبا ، أن يقل المجامل % 38(@)(@@) % ولست بجهم الوجه في وجه صاحبي % % ولا قائل للضيف : هل أنت راحل ؟ % 39(@)(@@) % ولكن قراه ما تشهى ، ورفده ، % ولو سأل الأعمار ما هو سائل % 40(@)(@@) % ينال اختيار الصفح عن كل مذنب % له عندنا ما لا تنال الوسائل % 41(@)(@@) % لنا عقب الأمر ، الذي في صدوره % تطاول أعناق العدا ، والكواهل % 42(@)(@@) % أصاغرنا ، في المكرمات ، أكابر % أواخرنا ، في المأثرات ، أوائل % 43(@)(@@) % إذا صلت ، يوما ، لم أجد لي مصاولا ؛ % وإن قلت ، يوما ، لم أجد من يقاول ! % PageV01P254 البحر : بسيط تام 1(@)(@@) % يا من أتانا بظهر الغيب ، قولهم % لو شئت ، غاظتكم منا الأقاويل % 2(@)(@@) % لكن أرى أن في الأقوال منقصة % ما لم تسد الأقاويل الأفاعيل % PageV01P255 البحر : بسيط تام 1(@)(@@) % أحل بالأرض يخشى الناس جانبها % % ولا أسائل أنى يسرح المال % 2(@)(@@) % فهيبتي في طراد الخيل واقعة % والناس فوضى ، ومال الحي إهمال % 3(@)(@@) % كذاك نحن ؛ إذا ما أزمة طرقت % حيا ، بحيث يخاف 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms50# الناس ، حلال ! % PageV01P256 البحر : بسيط تام 1(@)(@@) % ألعذر منك ، على الحالات مقبول ؛ % والعتب منك ، على العلات ، محمول % 2(@)(@@) % لولا اشتياقي لم أقلق لبعدكم ، % ولا غدا في زماني ، بعدكم ، طول % 3(@)(@@) % وكل منتظر ، إلاك ، محتقر ، % و كل شيء ، سوى لقياك ، مملول ! % PageV01P257 البحر : طويل 1(@)(@@) % إذا لم يعنك الله فيما ترومه ، % فليس لمخلوق إليه سبيل % 2(@)(@@) % وإن هو لم ينصرك لم تلق ناصرا % وإن عز أنصار وجل قبيل % 3(@)(@@) % وإن هو لم يرشدك في كل مسلك % ضللت ، ولو أن السماك دليل ! % PageV01P258 البحر : طويل 1(@)(@@) % مصابي جليل ، والعزاء جميل ، % وظني بأن الله سوف يديل % 5(@)(@@) % جراح ، تحاماها الأساة ، مخوفة ، % وسقمان : باد ، منهما ودخيل % 6(@)(@@) % و أسر أقاسيه ، وليل نجومه ، % أرى كل شيء ، غيرهن ، يزول % 7(@)(@@) % تطول بي الساعات ، وهي قصيرة ؛ % وفي كل دهر لا يسرك طول ! % 8(@)(@@) % تناساني الأصحاب ، إلا عصيبة % ستلحق بالأخرى ، غدا ، وتحول ! % 9(@)(@@) % و من ذا الذي يبقى على العهد ؟ إنهم ، % و إن كثرت دعواهم ، لقليل ! % 10(@)(@@) % أقلب طرفي لا أرى غير صاحب ، % يميل مع النعماء حيث تميل % 11(@)(@@) % وصرنا نرى : أن المتارك محسن ؛ % وأن صديقا لا يضر خليل % 14(@)(@@) % فكل خليل ، هكذا ، غير منصف ! % وكل زمان بالكرام بخيل ! % 15(@)(@@) % نعم ، دعت الدنيا إلى الغدر دعوة ، % أجاب إليها عالم ، وجهول % PageV01P259 17(@)(@@) % وفارق عمرو بن الزبير شقيقه ، % وخلى أمير المؤمنين عقيل ! % 18(@)(@@) % فيا حسرتا ، من لي بخل موافق % أقول بشجوي ، مرة ، ويقول ! % 19(@)(@@) % وإن ، وراء الستر ، أما بكاؤها % % علي ، وإن طال الزمان ، طويل ! % 20(@)(@@) % فيا أمتا ، لا تعدمي الصبر ، إنه % إلى الخير والنجح القريب رسول ! % 21(@)(@@) % ويا أمتا ، لا تخطئي الأجر ! إنه % على قدر الصبر الجميل جزيل % 23(@)(@@) % أما لك في ' ذات النطاقين ' أسوة ، % ب ' مكة ' والحرب العوان تجول ؟ % 24(@)(@@) % أراد ابنها أخذ الأمان فلم تجب % و تعلم ، علما أنه لقتيل ! % 25(@)(@@) % تأسي ! كفاك الله ما تحذرينه ، % فقد غال هذا الناس قبلك غول ! % 26(@)(@@) % و كوني كما كانت ب ' أحد ' ' صفية ' % ولم يشف منها بالبكاء غليل ! % 27(@)(@@) % ولو رد ، يوما ' حمزة الخير ' حزنها % % إذا ما علتها رنة وعويل % PageV01P260 29(@)(@@) % لقيت نجوم الأفق وهي صوارم ، % وخضت سواد الليل ، وهو خيول % 30(@)(@@) % ولم أرع للنفس الكريمة خلة ، % عشية لم يعطف علي خليل 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms51# % 31(@)(@@) % ولكن لقيت الموت ، حتى تركتها ، % وفيها وفي حد الحسام فلول % 32(@)(@@) % ومن لم يوق الله فهو ممزق ! % ومن لم يعز الله ، فهو ذليل ! % 33(@)(@@) % و من لم يرده الله ، في الأمر كله ، % فليس لمخلوق إليه سبيل % PageV01P261 البحر : وافر تام 1(@)(@@) % ومغض ، للمهابة ، عن جوابي ! % وإن لسانه العضب الصقيل % 2(@)(@@) % أطلت عتابه ، عنتا وظلما ، % فجمجم ، ثم قال : ' كما تقول ! ' % PageV01P262 البحر : طويل 1(@)(@@) % وما لي لا أثني عليك ، وطالما % % وفيت بعهدي ، والوفاء قليل ؟ % 2(@)(@@) % و أوعدتني حتى إذا ما ملكتني % % صفحت ، وصفح المالكين جميل ! % PageV01P263 البحر : متقارب تام 1(@)(@@) % بقلبي ، على ' جابر ' ، حسرة % تزول الجبال ، وليست تزول % 2(@)(@@) % له ، ما بقيت ، طويل البكاء % و حسن الثناء ؛ وهذا قليل % PageV01P264 البحر : بسيط تام 1(@)(@@) % الدهر يومان : ذا ثبت ، وذا زلل ، % والعيش طعمان : ذا صاب وذا عسل % 2(@)(@@) % كذا الزمان ؛ فما في نعمة بطر % للعارفين ؛ ولا في نقمة فشل % 3(@)(@@) % سعادة المرء في السراء إن رجحت ، % والعدل أن يتساوى الهم والجذل % 4(@)(@@) % وما الهموم ، وإن حاذرت ، ثابتة % ولا السرور ، وإن أملت يتصل % 5(@)(@@) % فما الأسى لهموم ، لابقاء لها ، % وما السرور بنعمى ، سوف تنتقل % 6(@)(@@) % لكن في الناس مغرورا بنعمته ، % ما جاءه اليأس حتى جاءه الأجل % PageV01P265 البحر : وافر تام 1(@)(@@) % وعطاف على الغمرات نحوي ، % تحف به المثقفة الطوال % 2(@)(@@) % تركت الرمح ، يخطر في حشاه ، % له ، ما بين أضلعه ، مجال % 3(@)(@@) % يقول ، وقد تعدل فيه ، رمحي : % ' لأمر ما تحاماك الرجال ! ' % PageV01P266 البحر : بسيط تام 1(@)(@@) % قد ضج جيشك ، من طول القتال به ، % وقد شكتك إلينا الخيل والإبل ! % 2(@)(@@) % وقد درى الروم مذ جاورت أرضهم % أن ليس يعصمهم سهل ولا جبل % 3(@)(@@) % في كل يوم تزور الثغر ، لا ضجر % يثنيك عنه ، ولا شغل ولا ملل % 4(@)(@@) % فالنفس جاهدة ، والعين ساهدة ، % والجيش منهمك ، والمال مبتذل % 5(@)(@@) % توهمتك كلاب غير قاصدها ، % وقد تكنفك الأعداء والشغل % 6(@)(@@) % حتى رأوك ، أمام الجيش ، تقدمه % وقد طلعت عليهم دون ما أملوا % % 7(@)(@@) % فاستقبلوك بفرسان ، أسنتها % % سود البراقع ، والأكوار ، والكلل % 8(@)(@@) % فكنت أكرم مسؤول وأفضله ، % إذا وهبت فلا من ولا بخل % PageV01P267 البحر : كامل تام 1(@)(@@) % ويقول في الحاسدون ، تكذبا ، % ويقال في المحسود ما لا يفعل % 2(@)(@@) % يتطلبون إساءتي لا ذمتي ، % إن الحسود ، بما يسوء 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms52# ، موكل % PageV01P268 البحر : طويل 1(@)(@@) % أقلي ، فأيام المحب قلائل ، % وفي قلبه شغل عن اللوم شاغل % 2(@)(@@) % ولعت بعذل المستهام على الهوى ، % وأولع شيء بالمحب العواذل % 3(@)(@@) % أريتك ، هل لي من جوى الحب مخلص ، % وقد نشبت ، للحب في ، حبائل ؟ % 4(@)(@@) % وبين بنيات الخدور وبيننا % % حروب ، تلظى نارها وتطاول % 5(@)(@@) % أغرن على قلبي بجيش من الهوى % % وطارد عنهن الغزال المغازل % 6(@)(@@) % تعمد بالسهم المصيب مقاتلي ، % ألا كل أعضائي ، لديه ، مقاتل % 7(@)(@@) % ووالله ، ماقصرت في طلب العلا ؛ % ولكن كأن الدهر عني غافل % 8(@)(@@) % مواعيد آمال ، تماطلني بها % % مراماة أزمان ، ودهر مخاتل % 9(@)(@@) % تدافعني الأيام عما أريده ، % كما دفع الدين الغريم المماطل % 10(@)(@@) % خليلي ، أغراضي بعيد منالها ! % فهل فيكما عون على ما أحاول ؟ % PageV01P269 11(@)(@@) % خليلي ! شدا لي على ناقتيكما % % إذا مابدا شيب من العجز ناصل % 13(@)(@@) % فمثلي من نال المعالي بسيفه ، % وربتما غالته ، عنها ، الغوائل % 14(@)(@@) % وما كل طلاب ، من الناس ، بالغ % ولا كل سيار ، إلى المجد ، واصل ! % 15(@)(@@) % وإن مقيما منهج العجز خائب % وإن مريغا ، خائب الجهد ، نائل % 16(@)(@@) % وما المرء إلا حيث يجعل نفسه % وإني لها ، فوق السماكين ، جاعل % 17(@)(@@) % وللوفر متلاف ، وللحمد جامع ، % وللشر تراك ، وللخير فاعل % 18(@)(@@) % وما لي لا تمسي وتصبح في يدي % % كرائم أموال الرجال العقائل ؟ % 19(@)(@@) % أحكم في الأعداء منها صوارما % أحكمها فيها إذا ضاق نازل % 20(@)(@@) % و مانال محمي الرغائب ، عنوة ، % سوى ما أقلت في الجفون الحمائل % PageV01P270 البحر : بسيط تام 1(@)(@@) % سكرت من لحظه لا من مدامته % و مال بالنوم عن عيني تمايله % 2(@)(@@) % وما السلاف دهتني بل سوالفه ، % و لا الشمول ازدهرني بل شمائله % 3(@)(@@) % وغال صبري ما تحوي غلائله % و غال قلبي ما تحوي غلائله % PageV01P271 البحر : طويل 1(@)(@@) % لحبك من قلبي حمى لا يحله % سواك ، وعقد ليس خلق يحله % 2(@)(@@) % وقد كنت أطلقت المنى لي بموعد % و قدرت لي وقتا ، وهذا محله ! % 3(@)(@@) % ففي أي حكم ؟ أو على أي مذهب % تحل دمي ؟ والله ليس يحله ! % PageV01P272 البحر : متقارب تام 1(@)(@@) % أفر من السوء لا أفعله % ومن موقف الضيم لا أقبله % 2(@)(@@) % وقربى القرابة أرعى لها ، % وفضل أخي الفضل لا أجهله % 3(@)(@@) % و أبذل عدلي للأضعفين ؛ % و للشامخ الأنف لا أبذله % 4(@)(@@) % و أحسن ما كنت 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms53# بقيا إذا % % أنالني الله ما آمله % 5(@)(@@) % وقد علم الحي ، حي الضباب ، % و أصدق قيل الفتى أفضله % 6(@)(@@) % بأني كففت ، وأني عففت ، % و إن كره الجيش ما أفعله % 7(@)(@@) % وقد أرهق الحي ، من خلفه % و أوقف ، خوف الردى ، أوله % 8(@)(@@) % فعادت ' عدي ' بأحقادها ، % وقد عقل الأمر من يعقله % PageV01P273 البحر : منسرح 1(@)(@@) % يا حسرة ما أكاد أحملها ، % آخرها مزعج ، وأولها ! % 2(@)(@@) % عليلة ، بالشآم مفردة ، % بات ، بأيدي العدا ، معللها % % 3(@)(@@) % تمسك أحشاءها ، على حرق % أنت ، على يأسها ، مؤملها % % 4(@)(@@) % إذا اطمأنت - وأين ؟ - أو هدأت ؛ % عنت لها ذكرة تقلقلها % % 5(@)(@@) % تسأل عنا الركبان ، جاهدة % بأدمع ما تكاد تمهلها : % 6(@)(@@) % ' يامن رأى لي ، بحصن ' خرشنة ' % أسد شرى ، في القيود أرجلها ! ' % 7(@)(@@) % ' يامن رأى لي الدروب ، شامخة % دون لقاء الحبيب أطولها ' % 8(@)(@@) % يامن رأى لي القيود ، موثقة ، % على حبيب الفؤاد أثقلها ! ' % 9(@)(@@) % يا أيها الراكبان ، هل لكما % % في حمل نجوى ، يخف محملها ؟ ! % 10(@)(@@) % قولا لها ، إن وعت مقالكما ، % وإن ذكري لها ليذهلها : % PageV01P274 11(@)(@@) % يا أمتا ، هذه منازلنا % % نتركها تارة ، وننزلها ! % 12(@)(@@) % يا أمتا ، هذه مواردنا % % نعلها تارة ، وننهلها ! ' % 13(@)(@@) % ' أسلمنا قومنا إلى نوب % أيسرها في القلوب أقتلها ' % 14(@)(@@) % ' واستبدلوا ، بعدنا ، رجال وغى % يود أدنى علاي أمثلها ' % 15(@)(@@) % يا سيدا ، ما تعد مكرمة ، % إلا وفي راحتيه أكملها % % 16(@)(@@) % ليست تنال القيود من قدمي ، % وفي اتباعي رضاك ، أحملها % % 17(@)(@@) % لاتتيمم ، والماء تدركه ! % غيرك يرضى الصغرى ويقبلها % % 18(@)(@@) % إن بني العم لست تحلفهم ؛ % إن عادت الأسد عاد أشبلها % % 19(@)(@@) % أنت سماء ، ونحن أنجمها ، % أنت بلاد ، ونحن أجبلها ! % 20(@)(@@) % أنت سحاب ، ونحن وابله ، % أنت يمين ، ونحن أنملها ! % PageV01P275 21(@)(@@) % بأي عذر ، رددت والهة ، % عليك ، دون الورى ، معولها % % 22(@)(@@) % جاءتك ، تمتاح رد واحدها ، % ينتظر الناس كيف تقفلها ! % 23(@)(@@) % سمحت مني بمهجة كرمت % أنت ، على يأسها ، مؤلمها % % 24(@)(@@) % إن كنت تبذل الفداء لها ! % فلم أزل ، في رضاك ، أبذلها % % 25(@)(@@) % تلك المودات ، كيف تهملها ؟ % تلك المواعيد ، كيف تغفلها ؟ % 26(@)(@@) % تلك العقود ، التي عقدت لنا ، % كيف ، وقد أحكمت ، تحللها ؟ % 27(@)(@@) % أرحامنا منك ؛ لم تقطعها ؟ % % 28(@)(@@) % أين المعالي التي عرفت بها ، % تقولها ، دائما ، وتفعلها ؟ % 29(@)(@@) % يا واسع الدار ، كيف توسعها % % ونحن في صخرة نزلزلها ! % 30(@)(@@) % يا ناعم الثوب ! كيف تبدله ؟ % ثيابنا الصوف ما نبدلها ! % PageV01P276 31(@)(@@) % يا راكب الخيل ! لو بصرت 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms54# بنا % % نحمل أقيادنا ، وننقلها ! % 32(@)(@@) % رأيت ، في الضر ، أوجها كرمت % فارق فيك الجمال أجملها ! % 33(@)(@@) % قد أثر الدهر في محاسنها ، % تعرفها ، تارة ، وتجهلها % % 34(@)(@@) % فلا تكلنا ، فيها ، إلى أحد ، % معلها محسن يعللها % % 35(@)(@@) % لا يفتح الناس باب مكرمة % صاحبها المستغاث يقفلها % % 36(@)(@@) % أينبري ، دونك ، الكرام لها % % وأنت قمقامها ، وأحملها ! % 37(@)(@@) % و أنت ، إن عن حادث جلل ، % قلبها المرتجى ، وحولها ! % 38(@)(@@) % منك تردى بالفضل أفضلها ، % منك أفاد النوال أنولها % % 39(@)(@@) % فإن سألنا سواك عارفة ، % فبعد قطع الرجاء نسألها % % 40(@)(@@) % إذا رأينا أولى الكرام بها % % يضيعها ، جاهدا ، ويهملها % % PageV01P277 41(@)(@@) % لم يبق ، في الناس ، أمة عرفت % إلا وفضل ' الأمير ' يشملها % % 42(@)(@@) % نحن أحق الورى برأفته ، % فأين عنا ؟ وأين معدلها ؟ % 43(@)(@@) % يا منفق المال ، لا يريد به % إلا المعالي التي يؤثلها % % 44(@)(@@) % أصبحت تشري مكارما فضلا % فداؤنا ، قد علمت ، أفضلها ! % 45(@)(@@) % لا يقبل الله ، قبل فرضك ذا ، % نافلة عنده تنفلها ! % PageV01P278 البحر : سريع 1(@)(@@) % أي اصطبار ليس بالزائل ؟ % و أي دمع ليس بالهامل ؟ % 2(@)(@@) % إنا فجعنا بفتى ' وائل % لما فجعنا ' بأبي وائل ' % 3(@)(@@) % المشتري الحمد بأمواله ، % والبائع النائل بالنائل % 4(@)(@@) % ماذا أرادت سطوات الردى % % بالأسد ابن الأسد ، الباسل ؟ % 5(@)(@@) % السيد ابن السيد ، المرتجى ، % والعالم ابن العالم ، الفاضل ! % 6(@)(@@) % أقسمت : لو لم يحكه ذكره % رجعن عنه بشبا ثاكل % 7(@)(@@) % كأنما دمعي ، من بعده % صوب سحاب واكف ، وابل % 8(@)(@@) % ما أنا أبكيه ، ولكنما % % تبكيه أطراف القنا الذابل % 9(@)(@@) % ما كان إلا حدثا نازلا ، % موكلا بالحدث النازل % 10(@)(@@) % دان إلى سبل الندى والعلا ، % ناء عن الفحشاء والباطل % PageV01P279 11(@)(@@) % أرى المعالي ، إذ قضى نحبه ، % تبكي بكاء الواله ، الثاكل % 12(@)(@@) % الأسد الباسل ، والعارض ال % % هاطل ، عند الزمن الماجل % 13(@)(@@) % لو كان يفدي معشر هالكا % فداه من حاف ، ومن ناعل % 14(@)(@@) % فكم حشا قبرك من راغب ! % وكم حشا تربك من آمل ! % 15(@)(@@) % سقى ثرى ، ضم ' أبا وائل ' ، % صوب عطايا كفه الهاطل ! % 16(@)(@@) % لا در در الدهر - ما باله % حملني ما لست بالحامل ؟ % 17(@)(@@) % كان ابن عمي ، إن عرا حادث ، % كالليث ، أو كالصارم الصاقل % 18(@)(@@) % كان ابن عمي عالما ، فاضلا ، % والدهر لا يبقي على فاضل % 19(@)(@@) % كان ابن عمي بحر جود طمى % % لكنه بحر بلا ساحل % 20(@)(@@) % من كان أمسى قلبه خاليا % فإنني في شغل شاغل 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms55# % PageV01P280 البحر : وافر تام 1(@)(@@) % ضلال مارأيت من الضلال % معاتبة الكريم على النوال % 2(@)(@@) % وإن مسامعي ، عن كل عذل ، % لفي شغل بحمد أو سؤال % 3(@)(@@) % ولا والله ، ما بخلت يميني ، % ولا أصبحت أشقاكم بمالي % % 4(@)(@@) % ولا أمسي يحكم فيه يعدي % % قليل الحمد ، مذموم الفعال % 5(@)(@@) % ولكني سأفنيه ، وأقني % % ذخائر من ثواب أو جمال % 6(@)(@@) % وللوراث إرث أبي وجدي ، % جياد الخيل والأسل الطوال % 7(@)(@@) % وما تجني سراة بني أبينا % % سوى ثمرات أطراف العوالي % % 8(@)(@@) % ممالكنا مكاسبنا ، إذا ما % % توارثها رجال عن رجال % 9(@)(@@) % إذا لم تمس لي نار فإني % % أبيت ، لنار غيري ، غير صال % 10(@)(@@) % أوينا ، بين أطناب الأعادي ، % إلى بلد ، من النصار خال % PageV01P281 11(@)(@@) % نمد بيوتنا ، في كل فج ، % به بين الأراقم والصلال % 14(@)(@@) % نعاف قطونه ، ونمل منه ، % ويمنعنا الإباء من الزيال % 15(@)(@@) % مخافة أن يقال ، بكل أرض : % بنو حمدان كفوا عن قتال % 16(@)(@@) % أسيف الدولة المأمول ، إني % % عن الدنيا ، إذا ما عشت ، سال % 17(@)(@@) % ومن ورد المهالك لم ترعه % رزايا الدهر في أهل ومال % 19(@)(@@) % إذا قضي الحمام علي ، يوما % ففي نصر الهدى بيد الضلال % 20(@)(@@) % مخافة أن يقال ، بكل أرض : % فليس عليك خائنة الليالي % % 21(@)(@@) % وأنت أشد هذا الناس بأسا ، % به بين الأراقم والصلال % 22(@)(@@) % وأهجمهم على جيش كثيف % وأغورهم على حي حلال % 26(@)(@@) % ضربت فلم تدع للسيف حدا % وجلت بحيث ضاق عن المجال % PageV01P282 27(@)(@@) % فقلت ، وقد أظل الموت : صبرا ! % وإن الصبر عند سواك غال % 28(@)(@@) % ألا هل منكر يابني نزار ، % مقامي ، يوم ذلك ، أو مقالي ؟ % 29(@)(@@) % ألم أثبت لها ، والخيل فوضى ، % بحيث تخف أحلام الرجال ؟ % 30(@)(@@) % تركت ذوابل المران فيها % % مخضبة ، محطمة الأعالي % % 31(@)(@@) % وعدت أجر رمحي عن مقام ، % تحدث عنه ربات الحجال % 32(@)(@@) % وقائلة تقول : جزيت خيرا % لقد حاميت عن حرم المعالي ! % 33(@)(@@) % ومهري لا يمس الأرض ، زهوا ، % كأن ترابها قطب النبال % 34(@)(@@) % كأن الخيل تعرف من عليها ، % ففي بعض على بعض تعالي % % 35(@)(@@) % % رخيص عنده المهج الغوالي % % 36(@)(@@) % فإن عشنا ذخرناها لأخرى ، % وإن متنا فموتات الرجال % PageV01P283 البحر : طويل 1(@)(@@) % فلما رأتنا اجفلت كل مجفل فبين قتيل بالدماء مضرج ، إباء إباء البكر ، غير مذلل ، % وعزم كحد السيف ، غير مفلل % 2(@)(@@) % أأغضي على الأمر ، الذي لا أريده ، % ولما يقم بالعذر 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms56# رمحي ومنصلي % % 3(@)(@@) % أبى الله ، والمهر المنيعي ، والقنا ، % وأبيض وقاع على كل مفصل % 4(@)(@@) % وفتيان صدق من غطاريف وائل % إذا قيل ركب الموت قالوا له : انزل % 5(@)(@@) % يسوسهم بالخير والشر ماجد ، % جرور لأذيال الخميس المذيل % 6(@)(@@) % له بطش قاس ، تحته قلب راحم ، % ومنع بخيل ، بعده بذل مفضل % 7(@)(@@) % وعزمة خراج من الضيم ، فاتك ، % وفي ، أبي ، يأخذ الأمر من عل % 8(@)(@@) % عزوف ، أنوف ، ليس يقرع سنه ، % جريء ، متى يعزم على الأمر يفعل % 9(@)(@@) % شديد على طي المنازل صبره ، % إذا هو لم يظفر بأكرم منزل % 10(@)(@@) % بكل محلاة السراة بضيغم ، % وكل معلاة الرحال بأحدل % PageV01P284 12(@)(@@) % كأن أعالي رأسها وسنامها % % منارة قسيس ، قبالة هيكل % 13(@)(@@) % سريت بها ، من ساحل البحر ، أغتد % % على ' كفر طاب ' ، صوبها لم يحول % 14(@)(@@) % وقدمت نذري أن يقولوا : غدرتنا % % وأقبلت ، لم أرهق ، ولم أتحيل % 15(@)(@@) % إلى عرب ، لا تختشي غلب غالب ، % وفي ، أبي ، يأخذ الأمر من عل % 16(@)(@@) % تواصت بمر الصبر ، دون حريمها % % 17(@)(@@) % % وفي ، أبي ، يأخذ الأمر من عل % 18(@)(@@) % فلما أطعت الجهل والغيظ ، ساعة ، % دعوت بحلمي : أيها الحلم أقبل ! % 19(@)(@@) % بنيات عمي هن ، ليس يرينني : % بعيد التجافي ، أو قليل التفضل % 20(@)(@@) % شفيع النزاريات ، غير مخيب ، % وداعي النزاريات ، غير مخذل % 21(@)(@@) % رددت ، برغم الجيش ، ما حاز كله ، % وكلفت مالي غرم كل مضلل % PageV01P285 22(@)(@@) % فأصبحت ، في الأعداء ، أي ممدح % وإن كنت في الأصحاب ، أي معذل % 23(@)(@@) % مضى فارس الحيين ' زيد بن منعة ' % ومن يدن من نار الوقيعة يصطل % 24(@)(@@) % وقرما ' بني البنا : تميم بن غالب ' % همامان ، طعانان في كل جحفل % 25(@)(@@) % ولو لم تفتني سورة الحرب فيهما % % جريت على رسم من الصفح أول % 26(@)(@@) % وعدت ، كريم البطش ، والعفو ، ظافرا ، % أحدث عن يوم أغر ، محجل % PageV01P286 البحر : مجزوء الكامل 1(@)(@@) % هل تعطفان على العليل ؟ % لا بالأسير ، ولا القتيل ! % 2(@)(@@) % باتت تقبله الأك % % ف ، سحابة الليل الطويل % % 3(@)(@@) % يرعى الندجوم السائرا % % ت من الطلوع إلى الأفول % 4(@)(@@) % فقد الضيوف مكانه ، % وبكاه أبناء السبيل % 5(@)(@@) % واستوحشت لفراقه ، % يوم الوغى ، سرب الخيول % 6(@)(@@) % وتعطلت سمر الرما % % ح ، وأغمدت بيض النصول % 7(@)(@@) % يا فارج الكرب العظي % % م ، وكاشف الخطب الجليل % 8(@)(@@) % كن ، يا قوي ، لذا الضعي % % ف ، ويا عزيز ، لذا الذليل ! % 9(@)(@@) % قربه من سيف الهدى ، % في 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms57# ظل دولته الظليل ! % 10(@)(@@) % أوما كشفت عن ابن دا % % ود ' ثقيلات الكبول ؟ ! % PageV01P287 11(@)(@@) % لم أرو منه ولا شفي % % ت بطول خدمته ، غليلي % % 12(@)(@@) % ألله يعلم : أنه % أملي من الدنيا وسولي % % 13(@)(@@) % ولئن حننت إلى ذرا % % ه لقد حننت إلى وصول % 14(@)(@@) % لا بالغضوب ، ولا الكذو % % ب ، ولا القطوب ، ولا الملول % 15(@)(@@) % يا عدتي في النائبا % % ت ، وظلتي عند المقيل ! % 16(@)(@@) % أين المحبة ، والذما % % م وما وعدت من الجميل ؟ ! % 17(@)(@@) % أجمل على النفس الكري % % مة في ، والقلب الحمول ! % 18(@)(@@) % أما المحب فليس يص % غي في هواه إلى عذول % 19(@)(@@) % يمضي بحال وفائه ، % ويصد عن قال وقيل ! % PageV01P288 البحر : رجز تام 1(@)(@@) % أروح القلب ببعض الهزل ، % تجاهلا مني ، بغير جهل ! % 2(@)(@@) % أمزح فيه ، مزح أهل الفضل ، % والمزح ، أحيانا ، جلاء العقل % PageV01P289 البحر : خفيف تام 1(@)(@@) % قل لأحبابنا الجفاة : رويدا ! % درجونا على احتمال الملال ! % 2(@)(@@) % إن ذاك الصدود ، من غير جرم % لم يدع في مطمعا بالوصال % 3(@)(@@) % أحسنوا في فعالكم أو أسيئوا ! % لا عدمناكم على كل حال ! % PageV01P290 البحر : خفيف تام 1(@)(@@) % قاتلي شادن ، بديع الجمال ، % أعجمي الهوى ، فصيح الدلال % 2(@)(@@) % سل سيف الهوى علي ونادى : % يا لثأر الأعمام والأخوال ! % 3(@)(@@) % كيف أرجو ممن يرى الثأر عندي % % خلقا من تعطف أو وصال ؟ % 4(@)(@@) % بعدما كرت السنون ، وحالت % دون ذي قار الدهور الخوالي % % 6(@)(@@) % أيها الملزمي جرائر قومي ، % بعدما قد مضت عليها الليالي ! % 7(@)(@@) % لم أكن من جناتها ، علم الله ، % و إني لحرها ، اليوم ، صال % PageV01P291 البحر : كامل تام 1(@)(@@) % الفكر فيك مقصر الآمال ، % والحرص بعدك غاية الجهال % 2(@)(@@) % لو كان يخلد بالفضائل فاضل % وصلت لك الآجال بالآجال ! % 3(@)(@@) % أو كنت تفدى لافتدتك سراتنا % % بنفائس الأرواح والأموال % 4(@)(@@) % أو كان يدفع عنك بأس أقبلت ، % شرعا ، تكدس بالقنا العسال % 5(@)(@@) % أعزز ، على سادات قومك ، أن ترى % % فوق الفراش ، مقلب الأوصال % 6(@)(@@) % و السابغات مصونة ، لم تبتذل ، % و البيض سالمة مع الأبطال % 7(@)(@@) % و إذا المنية أقيلت لم يثنها % % حرص الحريص ، وحيلة المحتال % 8(@)(@@) % ما للخطوب ؟ وما لأحداث الردى % % أعجلن جابر غاية الإعجال ؟ % 10(@)(@@) % لما تسربل بالفضائل ، وارتدى % % برد العلا ، وأعتم بالإقبال % 11(@)(@@) % وتشاهدت صيد الملوك بفضله % و أرى المكارم ، من مكان عال % PageV01P292 12(@)(@@) % أأبا المرجى ! غير حزني دارس ، % أبدا عليك ، وغير 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms58# قلبي سال % 14(@)(@@) % لا زلت مغدو الثرى ، مطروقه ، % بسحابة مجرورة الأذيال % 15(@)(@@) % و حجبن عنك السيئات ولم يزل % لك صاحب من صالح الأعمال % PageV01P293 البحر : وافر تام 1(@)(@@) % سلي عنا سراة بني كلاب % ببالس ، عند مشتجر العوالي ! % 2(@)(@@) % لقيناهم بأسياف قصار ، % كفين مؤونة الأسل الطوال % 3(@)(@@) % وولى ب ' آبن عوسجة كثير ' % وساع الخطو في ضنك المجال % 4(@)(@@) % يرى ' البرغوث ' إذ نجاه منا ، % أجل عقيلة ، وأحب مال % 5(@)(@@) % تدور به إماء من ' قريظ ' ؛ % وتسأله النساء عن الرجال ! % 6(@)(@@) % يقلن له : السلامة خير غنم ! % و إن الذل في ذاك المقال % 7(@)(@@) % و ' جهمان ' تجافت عنه بيض ، % عدلن عن الصريح إلى الموالي % % 8(@)(@@) % وعادوا ، سامعين لنا ، فعدنا % % إلى المعهود من شرف الفعال % 9(@)(@@) % و نحن متى رضينا بعد سخط % أسونا ما جرحنا بالنوال % PageV01P294 البحر : مجزوء الكامل 1(@)(@@) % نفسي فداؤك قد بعث % % ت بعهدتي بيد الرسول % 2(@)(@@) % أهديت نفسي ، إنما % % يهدى الجليل إلى الجليل % 3(@)(@@) % وجعلت ما ملكت يدي ، % بشرى المبشر بالقبول % PageV01P295 البحر : هزج 1(@)(@@) % غنى النفس ، لمن يعق % % ل ، خير من غنى المال ! % 2(@)(@@) % وفضل الناس ، في الأنف % س ، ليس الفضل في الحال % % PageV01P296 البحر : طويل 1(@)(@@) % يلوح بسيماه الفتى من بني أبي ، % وتعرفه من غيره بالشمائل % 2(@)(@@) % مفدى ، مردى ؛ يكثر الناس حوله % طويل نجاد السيف ، سبط الأنامل % % PageV01P297 البحر : وافر تام 1(@)(@@) % ألا لله ، يوم الدار يوما % بعيد الذكر ، محمود المآل % 2(@)(@@) % تركت به نساء ' بني كلاب ' ، % فوارك ، ما يرغن إلى الرجال % 3(@)(@@) % تركنا الشبخ ، شيخ ' بني قريظ ' % ببطن القاع ممنوع الذمال % 4(@)(@@) % مقاطعة أحبته ، ولكن % يبيت من الخوامع في وصال % 5(@)(@@) % تخف إذا تطاردنا ' كلاب ' ؛ % فكيف بها إذا قلنا نزال % 6(@)(@@) % تركناها ، ولم يتركن إلا % لأبناء العمومة ، والخوالي ! % 7(@)(@@) % فلم ينهضن عن تلك الحشايا ؛ % ولم يبرزن من تلك الحجال % PageV01P298 البحر : طويل 1(@)(@@) % إذا كان فضلي لا أسوغ نفعه % فأفضل منه أن أرى غير فاضل % 2(@)(@@) % ومن أضيع الأشياء مهجة عاقل ، % يجوز على حوبائها حكم جاهل ! % PageV01P299 البحر : متقارب تام 1(@)(@@) % هواك هواي ، على كل حال % وإن مسني فيك بعض الملال % 3(@)(@@) % وكم لك عندي من غدرة ، % وقول ، تكذبه بالفعال ! % 4(@)(@@) % ووعد يعذب فيه الكريم % إما بخلف ، وإما مطال % 5(@)(@@) % صبرنا لسخطك ، صبر الكرام ، % فهذا رضاك ، فهل 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms59# من نوال ؟ % 6(@)(@@) % وذقنا مرارة كأس الصدود ، % فأين حلاوة كأس الوصال ؟ % PageV01P300 البحر : طويل 1(@)(@@) % أقول وقد ناحت بقربي حمامة : % أيا جارتا هل بات حالك حالي ؟ % 2(@)(@@) % معاذ الهوى ! ماذقت طارقة النوى ، % ولا خطرت منك الهموم ببال % 3(@)(@@) % أتحمل محزون الفؤاد قوادم % على غصن نائي المسافة عال ؟ % 4(@)(@@) % أيا جارتا ، ما أنصف الدهر بيننا ! % تعالي أقاسمك الهموم ، تعالي ! % 5(@)(@@) % تعالي تري روحا لدي ضعيفة ، % تردد في جسم يعذب بالي % % 6(@)(@@) % أيضحك مأسور ، وتبكي طليقة ، % ويسكت محزون ، ويندب سال ؟ % 7(@)(@@) % لقد كنت أولى منك بالدمع مقلة ؛ % ولكن دمعي في الحوادث غال ! % PageV01P301 البحر : طويل 1(@)(@@) % ولله عندي في الإسار وغيره % مواهب ، لم يخصص بها أحد قبلي ! % 2(@)(@@) % حللت عقودا ، أعجز الناس حلها ، % وما زال عقدي لا يذم ولا حلي % % 3(@)(@@) % إذا عاينتني الروم كفر صيدها ، % كأنهم أسرى لدي وفي كبلي % % 4(@)(@@) % وأوسع ، أيا ما حللت ، كرامة ، % كأنني من أهلي نقلت إلى أهلي % % 5(@)(@@) % فقل لبني عمي ، وأبلغ بني أبي : % بأني في نعماء يشكرها مثلي % % 6(@)(@@) % وما شاء ربي غير نشر محاسني ، % وأن يعرفوا ما قد عرفت من الفضل % PageV01P302 البحر : مجزوء الكامل 1(@)(@@) % إنا ، إذا اشتد الزما % % ن ، وناب خطب وادلهم % % 2(@)(@@) % ألفيت ، حول بيوتنا ، % عدد الشجاعة ، والكرم % 3(@)(@@) % للقا العدى بيض السيو % % ف ، وللندى حمر النعم % 4(@)(@@) % هذا وهذا دأبنا ، % يودى دم ، ويراق دم % 5(@)(@@) % قل لابن ورقا جعفر ، % حتى يقول بما علم % 6(@)(@@) % إني ، وإن شط المزا % % ر ولم تكن داري أمم % 7(@)(@@) % أصبو إلى تلك الخلا % % ل ، وأصطفي تلك الشيم ' % 8(@)(@@) % ' وألوم عادية الفرا % % ق ، وبين أحشائي ألم % 9(@)(@@) % ' ولعل دهرا ينثني ، % ولعل شعبا يلتئم ' % 10(@)(@@) % ' هل أنت ، يوما ، منصفي % % من ظلم عمك ؟ يا بن عم % PageV01P303 11(@)(@@) % أبلغه عني ما أقو % % ل ، فأنت من لا يتهم ! ' % 12(@)(@@) % أني رضيت ، وإن كره % ت ، أبا محمد الحكم % PageV01P304 البحر : مجزوء الكامل 1(@)(@@) % يهني الأمير بشارة ، % قرت بها عين المكارم % 2(@)(@@) % أعلى الورى شرفا ، ومن % قد بشروه بخير قادم % 3(@)(@@) % إني ، وإن كنت المشا % % رك في الأبوة ، والمساهم % 4(@)(@@) % لأقول قولا لا يرد ، % ولا يرى لي فيه لاثم : % 5(@)(@@) % لأبي المعالي ، في العلا ، % و ' أبي المكارم ' في المكارم % 6(@)(@@) % بيت ، رفيع سمكه ، % عالي الذرى ، ثبت الدعائم % PageV01P305 البحر 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms60# : كامل تام 1(@)(@@) % إبنان ، أم شبلان ذان ؟ فإنني % % لأرى دماء الدارعين غذاهما % % 2(@)(@@) % تنبي الفراسة : أن في ثوبيهما % % ليثين ، تجتنب الليوث حماهما % % 3(@)(@@) % لم لا يفوقان الأنام ، مكارما ! % والسيدان ، كلاهما ، جداهما % % 4(@)(@@) % تلقى ' أبا الهيجاء ' في هيجاهما ، % ويريك فضل أبي العلاء علاهما % % 5(@)(@@) % زدناهما ، شرفا رفيعا سمكه ، % ثبت الدعائم ، إذ تخولناهما % % 6(@)(@@) % ميزت بينهما فلم يتفاضلا % % كالفرقدين تشاكلت حالاهما % % 7(@)(@@) % إني ، وإن كان التعصب شيمتي ، % لا أدفع الشرف المنيف أخاهما ! % 8(@)(@@) % أنى يقصر عن مكان في العلا % % والمجد ، من أضحى أبوه أباهما ؟ % 9(@)(@@) % لكن لذين بنا مكان باذخ ، % لايدعيه ، من الأنام ، سواهما % % PageV01P306 البحر : وافر تام 1(@)(@@) % أسرت فلم أذق للنوم طعما ، % ولا حل الطعان لنا حزاما % % 2(@)(@@) % وسرنا ، معلمين ، إليك حتى % % ضربنا ، خلف ' خرشنة ' الخياما ! % PageV01P307 البحر : مجزوء الكامل 1(@)(@@) % يا سيدي ! أراكما % % لا تذكران أخاكما ! % 2(@)(@@) % أوجدتما بدلا به ، % يبني سماء علاكما ؟ % 3(@)(@@) % أوجدتما بدلا به ، % يفري نحور عداكما ! ؟ % 4(@)(@@) % ما كان بالفعل الجمي % % ل ، بمثله ، أولاكما ! % 5(@)(@@) % من ذا يعاب ، بما لقي % % ت من الورى ، إلا كما ؟ % 6(@)(@@) % لا تقعدا بي ، بعدها ، % وسلا ' الأمير ' ، أباكما ! % 7(@)(@@) % وخذا فداي ، جعلت من % ريب الزمان فداكما ! % PageV01P308 البحر : بسيط تام 1(@)(@@) % وشادن قال لي ، لما رأى سقمي % % وضعف جسمي والدمع الذي انسجما % % 2(@)(@@) % أخذت دمعك من خدي ، وجسمك من % % خصري وسقمك من طرفي الذي سقما % % PageV01P309 البحر : وافر تام 1(@)(@@) % ألا من مبلغ سروات قومي % % وسيف الدولة الملك ، الهماما ! % 2(@)(@@) % بأني لم أدع فتيات قومي ، % إذا حدثن ، جمجمن الكلاما % % 3(@)(@@) % شريت ثناءهن ببذل نفسي ، % و نار الحرب تضطرم اضطراما % % 4(@)(@@) % ولما لم أجد إلا فرارا % أشد من المنية أو حماما % % 5(@)(@@) % حملت ، على ورود الموت ، نفسي % % وقلت لعصبتي : ' موتوا كراما ! ' % 6(@)(@@) % ولم أبذل ، لخوفهم ، مجنا ، % ولم ألبس حذار الموت ، لاما % % 7(@)(@@) % وعذت بصارم ، ويد ، وقلب % حماني أن ألام ، وأن أضاما % % 8(@)(@@) % ألفهم وأنشرهم كأني % % أطرد منهم الإبل السواما % % 9(@)(@@) % وأنتقد الفوارس ، بيد أني % % رأيت اللوم أن ألقى اللئاما % % 10(@)(@@) % ومدعو إلى أجاب لما % % رأى أن قد تذمم واستلاما % % PageV01P310 11(@)(@@) % عقدت على مقلده يميني ، % وأعفيت المثقف والحساما % % 12(@)(@@) % وهل عذر ، و ' سيف الدين ركني ، % إذا لم أركب الخطط العظاما ؟ % 13(@)(@@) % وأتبع فعله ، في كل أمر ، % وأجعل فضله ، أبدا 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms61# ، إماما % % 14(@)(@@) % وقد أصبحت منتسبا إليه ، % وحسبي أن أكون له غلاما % % 15(@)(@@) % أراني كيف أكتسب المعالي ، % وأعطاني ، على الدهر ، الذماما % % 16(@)(@@) % ورباني ففقت به البرايا ، % وأنشأني فسدت به الأناما % % 17(@)(@@) % فعمره الإله لنا طويلا ، % وزاد الله نعمته دواما ! % PageV01P311 البحر : بسيط تام 1(@)(@@) % لمثلها يستعد البأس والكرم ، % وفي نظائرها تستنفد النعم % 2(@)(@@) % هي الرئاسة لا تقنى جواهرها ، % حتى يخاض إليها الموت والعدم % 3(@)(@@) % تقاعس الناس عنها فانتدبت لها % % كالسيف ، لا نكل فيه ولا سأم % 4(@)(@@) % ما زال يجحدها قوم ، وينكرها % % حتى أقروا ، وفي آنافهم رغم % 5(@)(@@) % شكرا فقد وفت الأيام ما وعدت ، % أقر ممتنع ؛ وانقاد معتصم ! % 6(@)(@@) % وما الرئاسة إلا ما تقر به % شمس الملوك ، وتعنو تحته الأمم % 7(@)(@@) % مغارم المجد يعتد الملوك بها % % مغانما في العلا ، في طيها نعم % 8(@)(@@) % هذي شيوخ ' بني حمدان ' قاطبة ، % لاذوا بدارك عند الخوف واعتصموا % % 9(@)(@@) % حلوا بأكرم من حل العباد به % بحيث حل الندى واستوثق الكرم % 10(@)(@@) % فكنت منهم وإن أصبحت سيدهم ، % تواضع الملك في أصحابه عظم ! % PageV01P312 11(@)(@@) % شيخوخة سبقت ، لا فضل يتبعها % % وليس يفضل فينا الفاضل الهرم % 12(@)(@@) % ولم يفضل ' عقيلا ' في ولادته % على علي أخيه ، السن والقدم % 13(@)(@@) % وكيف يفضل من أزرى به بخل % وقعدة اليد ، والرجلين ، والصمم % 14(@)(@@) % لا تنكروا ، يا بنيه ، ما أقول فلن % تنسى الترات ولا إن حال شيخكم % 15(@)(@@) % كادت مخازيه ترديه فأنقذه % منها ، بحسن دفاع عنه ، عمكم % 16(@)(@@) % أستودع الله قوما ، لا أفسرهم ، % الظالمين ، ولو شئنا لما ظلموا % % 17(@)(@@) % القائلين ، ونغضي عن جوابهم , % والجائرين ، ونرضى بالذي حكموا % % 18(@)(@@) % إني ، على كل حال ، لست أذكرهم ؛ % إلا وللشوق دمعي واكف ، سجم % 19(@)(@@) % الأنفس اجتمعت يوما ، أو افترقت % إذا تأملت ، نفس ، والدماء دم % 20(@)(@@) % رعاهم الله ، ما ناحت مطوقة ، % وحاطهم ، أبدا ، ما أورق السلم % PageV01P313 البحر : طويل 1(@)(@@) % يقولون لا تخرق بحلمك هيبة % وأحسن شيء زين الهيبة الحلم % 2(@)(@@) % فلا تتركن العفو عن كل زلة % فما العفو مذموم ، وإن عظم الجرم % PageV01P314 البحر : طويل 1(@)(@@) % نفى النوم عن عيني خيال مسلم % تأوب من أسماء ، والركب نوم % 2(@)(@@) % ظللت وأصحابي عباديد في الدجى % % ألذ بجوال الوشاح ، وأنعم % 3(@)(@@) % وسائلة عني فقلت ، تعجبا : % كأنك لا تدرين كيف المتيم ؟ % 4(@)(@@) % أعرني ، أقيك السوء ، نظرة وامق 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms62# % لعلك ترثي ، أو لعلك ترحم ! % 5(@)(@@) % فما أنا إلا عبدك القن في الهوى ، % وما أنت إلا المالك ، المتحكم % 6(@)(@@) % وأرضى بما ترضى على السخط والرضا % % وأغضي ، على علم بأنك تظلم % 7(@)(@@) % يئست من الإنصاف بيني وبينه ، % ومن لي بالإنصاف والخصم يحكم ؟ % 8(@)(@@) % وخطب من الأيام أنساني الهوى ، % وأحلى بفي الموت ، والموت علقم % 9(@)(@@) % ووالله ، ماشببت إلا علاله ، % ومن نار غير الحب قلبي يضرم % 10(@)(@@) % ألا مبلغ عني الحسين ألوكة ، % تضمنها در الكلام المنظم % PageV01P315 11(@)(@@) % لذيذ الكرى ، حتى أراك ، محرم % ونار الأسى بين الحشا تتضرم % 12(@)(@@) % وأترك أن أبكي عليك ، تطيرا ، % وقلبي يبكي ، والجوانح تلطم % 14(@)(@@) % وإن جفوني إن ونت للئيمة ، % وإن فؤادي إن سلوت لألأم % 15(@)(@@) % وأظهر للأعداء فيك جلادة ، % وأكتم ما ألقاه والله يعلم % 16(@)(@@) % سأبكيك ، ما أبقى لي الدهر مقلة ، % فإن عزني دمع ، فما عزني دم % 17(@)(@@) % وحكمي بكاء الدهر فيما ينوبني ، % وحكم لبيد فيه حول مجرم % 18(@)(@@) % و ما نحن إلا ' وائل ' و ' مهلهل ' % صفاء ، وإلا مالك ومتمم ! % 19(@)(@@) % وإني وإياه لعين وأختها ، % وإني وإياه لكف ومعصم % 20(@)(@@) % تصاحبنا الأيام في ثوب ناصح % ويختلنا منها ، على الأمن ، أرقم % 21(@)(@@) % وما أغربت فيك الليالي ، وإنها % % لتصدعنا من كل شعب وتثلم % PageV01P316 22(@)(@@) % طوارق خطب ، ما تغب وفودها ، % وأحداث أيام تغذ وتتئم % 23(@)(@@) % فما عرفتني غير ما أنا عارف % ولا علمتني غير ما كنت أعلم % 24(@)(@@) % متى لم تصب من الليالي ابن همة % يجشمها صرف الردى فتجشم % 25(@)(@@) % تهين علينا الحرب نفسا عزيزة % إذا عاضنا منها الثناء المنمنم % 26(@)(@@) % وإني لغر إن رضيت بصاحب % يبش ، وفيه جانب متجهم % 27(@)(@@) % ونحن أناس ، لا تزال سراتنا % % لها مشرب ، بين المنايا ، ومطعم % 28(@)(@@) % نظرناإلى هذا الزمان ، وأهله % فهان علينا ما يشت وينظم % 29(@)(@@) % وندعو كريما من يجود بماله ، % ومن يبذل النفس الكريمة أكرم % 30(@)(@@) % وما لي لا أمضي حميدا ومطلبي % % بعيد ، و ما فعلي بحال مذمم % 31(@)(@@) % إذا لم يكن ينجي الفرار من الردى ، % على حالة ، فالصبر أرجى وأحزم % PageV01P317 32(@)(@@) % لك الله إنا بين غاد ورائح % نعد المغازي في البلاد ونغنم % 33(@)(@@) % وأرماحنا في كل لبة فارس % تثقب تثقيب الجمان وتنظم % 34(@)(@@) % سنضربهم ، مادام للسيف قائم ، % ونطعنهم ، مادام للرمح لهذم % 35(@)(@@) % ونقفوهم ، خلف 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms63# الخليج بضمر % تخوض بحارا بعض خلجانها دم % 36(@)(@@) % بكل غلام من ' نزار ' وغيرها % % عليه من الماذي درع مختم % 37(@)(@@) % ونجنب ما ألقى ' الوجيه ' و ' لاحق ' % إلى كل ما أبقى الجديل وشدقم % 38(@)(@@) % ونعتقل الصم العوالي إنها % % طريق إلى نيل المعالي وسلم % 39(@)(@@) % رأيتهم يرجون ثأرا بسالف ، % وفي كل يوم يأخذ السيف منهم % 40(@)(@@) % فقل ل ' ابن فقاس ' : دع الحرب جانبا ! % فإنك رومي ، وخصمك مسلم % 41(@)(@@) % فوجهك مضروب ، وأمك ثاكل ، % وسبطك مأسور ، وعرسك أيم % PageV01P318 42(@)(@@) % ولم تنب عنك البيض في كل مشهد % ولكن قتل الشيخ فينا محرم % 43(@)(@@) % إذا ضربت فوق الخليج قبابنا ، % وأمسى عليك الذل ، وهو مخيم % 44(@)(@@) % وأدى إلينا ' الملك ' جزية رأسه ، % وفك عن الأسرى الوثاق وسلموا % % 45(@)(@@) % فإن ترغبوا في الصلح فالصلح صالح % وإن تجنحوا للسلم فالسلم أسلم % 46(@)(@@) % أعادات سيف الدولة القرم إنها % % لإحدى الذي كشفت بل هي أعظم ! % 47(@)(@@) % وإن لسيف الدولة القرم عادة % تروم علوق المعجزات فترأم % 48(@)(@@) % وقيل لها : سيف الهدى ، قلت : إنه % % ليفعل خير الفاعلين ويكرم % 49(@)(@@) % أما انتاش من مس الحديد وثقله % ' أبا وائل ' والبيض في البيض تحكم % 50(@)(@@) % تجر عليه الحرب ، من كل جانب ، % فلا ضجر جاف ، ولا متبرم % 51(@)(@@) % أخو عزمات في الحروب إذا أتى % % أتى حادث ، من جانب الله مبرم % PageV01P319 52(@)(@@) % نخف ، إذا ضاقت علينا أمورنا ، % بأبيض وجه الرأي والخطب مظلم % 53(@)(@@) % ونرمي بأمر لا نطيق احتماله % إلى قرمنا ، والقرم بالأمر أقوم % 54(@)(@@) % إلى رجل يلقاك في شخص واحد % ولكنه في الحرب جيش عرمرم % 55(@)(@@) % نثيل على الأعداء أعقاب وطئه ، % صليب على أفواهها حين تعجم % 56(@)(@@) % ونمسك عن بعض الأمور مهابة ، % فيعلم ما يخفي الضمير ، ويفهم % 57(@)(@@) % ونجني جنايات عليه يقيلها ، % ونخطيء أحيانا إليه فيحلم % 58(@)(@@) % يسوموننا فيك الفداء ، وإننا % % لنرجوك قسرا والمعاطس ترغم % 59(@)(@@) % أترضى بأن نعطى السواء قسيمنا % % إذا المجد بين الأغلبين يقسم ؟ % 60(@)(@@) % وما الأسر غرم ، والبلاء محمد ، % ولا النصر غنم ، والهلاك مذمم % 61(@)(@@) % % وأقدمت لو أن الكتائب تقدم % PageV01P320 62(@)(@@) % دعوت خلوفا ، حين تختلف القنا ، % وناديت صما عنك ، حين تصمم % 63(@)(@@) % وما عابك ، ابن السابقين إلى العلا ، % تأخر أقوام وأنت مقدم % 64(@)(@@) % و مالك لا تلقى بمهجتك الردى ، % وأنت من القوم الذين هم هم ! % 65(@)(@@) % لعا 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms64# ، يا أخي ! - لامسك السوء - إنه % هو الدهر في حاليه : بؤس وأنعم % 66(@)(@@) % و ما ساءني أني مكانك ، عانيا % وأسلم نفسي للإسار وتسلم % 67(@)(@@) % طلبتك حتى لم أجد لي مطلبا ، % وأقدمت حتى قل من يتقدم % 68(@)(@@) % % ولكن قضاء فاتني فيك مبرم ! % 69(@)(@@) % فإن جل هذا الأمر فالله فوقه ، % وإن عظم المطلوب فالله أعظم ! % 70(@)(@@) % وإني أخفي فيك ، ماليس خافيا % وأكتم وجدا ، مثله لا يكتم % 71(@)(@@) % ولو أنني وفيت رزءك حقه % لما خط لي كف ، ولا فاه لي فم ! % PageV01P321 البحر : وافر تام 1(@)(@@) % وراءك يا ' نمير ' ! فلا إمام % فقد حرم الجزيرة والشآم % 2(@)(@@) % لنا الدنيا ، فما شئنا حلال % لساكنها ، وما شئنا حرام % 3(@)(@@) % وينفذ أمرنا ، في كل حي ، % فيدنيه ويقصيه الكلام % 4(@)(@@) % أراجية خويلفة ذماما % وراءك ، لا أمان ولا ذمام ! % 5(@)(@@) % ألم تخبرك خيلك عن مقامي % % ببالس يوم ضاق بها المقام ! % 6(@)(@@) % وولت تتقي ، بعضا ببعض ، % لهم - والأرض واسعة - زحام % 7(@)(@@) % سروا والليل يجمعنا ، ولمن % يبوح بهم ، ويكتمنا الظلام % 8(@)(@@) % إلى أن صبحتهم بالمنايا % % كرائم ، فوق أظهرها كرام % 9(@)(@@) % من العرشات تلحق ما رأته % إذا طلبت ، وتعطى ما تسام % 10(@)(@@) % تنازع بي وبالفرسان حولي % % تجفلهم ، كما جفل النعام % PageV01P322 11(@)(@@) % بطحنا منهم ' مرج بن جحش ' % فلم يقفوا عليه ، ولم يحاموا % % 12(@)(@@) % أقول لمطعم لما التقينا ، % وقد ولى وفي يدي الحسام % 13(@)(@@) % أتجعل بيننا عشرين كعبا % وتهرب ! سوءة لك يا غلام ! % 14(@)(@@) % أحلكم بدار الضيم ، قسرا ، % همام لا يضام ، ولا يرام ! % PageV01P323 البحر : بسيط تام 1(@)(@@) % أشدة ، ما أراه منك ، أم كرم ! % تجود بالنفس ، والأرواح تصطلم % 2(@)(@@) % يا باذل النفس والأموال مبتسما ، % أما يهولك لا موت ، ولا عدم ؟ ! % 3(@)(@@) % لقد ظننتك ، بين الجحفلين ، ترى % % أن السلامة ، من وقع القنا ، تصم % 4(@)(@@) % نشدتك الله ، لا تسمح بنفس علا ، % حياة صاحبها تحيا بها الأمم % 5(@)(@@) % هي الشجاعة إلا أنها سرف ، % وكل فضلك لا قصد ولا أمم % 6(@)(@@) % إذا لقيت رقاق البيض ، منفردا ، % تحت العجاجة لم تستكثر الخدم % 7(@)(@@) % تفدي بنفسك أقواما صنعتهم % وكان حقهم أن يفتدوك هم % 8(@)(@@) % ومن يقاتل من تلقى القتال به ، % وليس يفضل عنك الخيل والبهم % 9(@)(@@) % تضن بالحرب عنا ، ضن ذي بخل ، % ومنك ، في كل حال ، يعرف الكرم ! % 10(@)(@@) % لا تبخلن على قوم 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms65# إذا قتلوا % % أثنى عليك بنو الهيجاء ، دونهم % PageV01P324 11(@)(@@) % ألبست ما لبسوا ، أركبت ما ركبوا % % عرفت ما عرفوا ، علمت ما علموا % % 12(@)(@@) % كما أريت ببيض ، أنت واهبها ، % على خيولك خاضوا البحر وهو دم % 13(@)(@@) % هم الفوارس ، في أيديهم أسل ، % فإن رأوك فأسد ، والقنا أجم % 14(@)(@@) % قالوا المسير ! فهز الرمح عامله ، % وارتاح في جفنه الصمصامة الخذم % 15(@)(@@) % فطالبتني بما ساء العداة ، وقد % عودتها ما تشاء الذئب والرخم % 16(@)(@@) % حقا ، لقد ساءني أمر ، ذكرت له ، % لولا فراقك لم يوجد له ألم % 17(@)(@@) % لا تشغلني بأمر ' الشام ' أحرسه % إن الشآم على من حله حرم % 18(@)(@@) % فإن للثغر سورا من مهابته ، % صخوره من أعادي أهله قمم % 19(@)(@@) % لا يحرمني ' سيف الدين ' صحبته % فهي الحياة التي تحيا بها النسم % 20(@)(@@) % و ماا عترضت عليه في أوامره % لكن سألت ، ومن عاداته ، نعم ! % PageV01P325 البحر : بسيط تام 1(@)(@@) % الدين مخترم ، والحق مهتضم ، % وفيء آل ' رسول الله ' مقتسم % 2(@)(@@) % والناس عندك لا ناس ، فيحفظهم % سوم الرعاة ، ولا شاء ، ولا نعم % 3(@)(@@) % إني أبيت قليل النوم ، أرقني % % قلب ، تصارع فيه الهم والهمم ! % 4(@)(@@) % و عزمة ، لا ينام الليل صاحبها % % إلا على ظفر ، في طيه كرم % 5(@)(@@) % يصان مهري لأمر لا أبوح به ، % والدرع ، والرمح ، والصمصامة الخذم % 6(@)(@@) % وكل مائرة الضبعين ، مسرحها % % رمث الجزيرة ، والخذراف والغنم % 7(@)(@@) % و فتية ، قلبهم قلب إذا ركبوا % % يوما ؛ ورأيهم رأي إذا عزموا % % 8(@)(@@) % يا للرجال ! أما لله منتصف % من الطغاة ؟ أما للدين منتقم ؟ ! % 9(@)(@@) % ' بنو علي ' رعايا في ديارهم ، % والأمر تملكه النسوان ، والخدم ! % 10(@)(@@) % محلؤون ، فأصفى شربهم وشل ، % عند الورود ؛ وأوفى ودهم لمم % PageV01P326 11(@)(@@) % فالأرض ، إلا على ملاكها ، سعة ، % والمال ، إلا أربابه ، ديم % 12(@)(@@) % وما السعيد بها إلا الذي ظلموا ، % وما الغني بها إلا الذي حرموا % % 13(@)(@@) % للمتقين ، من الدنيا ، عواقبها % % وإن تعجل منها الظالم الأثم % 14(@)(@@) % لا يطغين ' بني العباس ' ملكهم ! % ' بنو علي ' مواليهم وإن زعموا % % 15(@)(@@) % أتفخرون عليهم ؟ - لا أبا لكم - % حتى كأن ' رسول الله ' جدكم % 16(@)(@@) % وما توازن ، يوما ، بينكم شرف ، % ولا تساوت بكم ، في موطن ، قدم % 17(@)(@@) % ولا لكم مثلهم ، في المجد ، متصل % ولا لجدكم مسعاة جدهم % 18(@)(@@) % ولا لعرقكم من عرقهم شبه % ولا ' نفيلتكم ' من أمهم أمم % 19(@)(@@) % قام النبي 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms66# بها ' يوم الغدير ' لهم % والله يشهد ، والأملاك ، والأمم % 20(@)(@@) % حتى إذا أصبحت في غير صاحبها % % باتت تنازعها الذؤبان والرخم % PageV01P327 21(@)(@@) % وصيرت بينهن شورى كأنهم % لا يعرفون ولاة الحق أيهم ! % 22(@)(@@) % تالله ، ماجهل الأقوام موضعها % % لكنهم ستروا وجه الذي علموا % % 23(@)(@@) % ثم ادعاها بنو العباس إرثهم ، % و مالهم قدم ، فيها ، ولا قدم % 24(@)(@@) % لا يذكرون ، إذا ما معشر ذكروا ، % ولا يحكم ، في أمر ، لهم حكم % 25(@)(@@) % ولا رآهم ' أبو بكر ' وصاحبه % أهلا لما طلبوا منها ، وما زعموا % % 26(@)(@@) % فهل هم مدعوها غير واجبة % أم هل أئمتهم في أخذها ظلموا ؟ % 27(@)(@@) % أما ' علي ' فقد أدنى قرابتكم ، % عند الولاية ، إن لم تكفر النعم ! % 28(@)(@@) % هل جاحد ، يا ' بني العباس ' نعمته ! % أبوكم ، أم عبيد الله ، أم قثم ؟ % 29(@)(@@) % بئس الجزاء جزيتم في بني ' حسن ' ! % أباهم العلم الهادي وأمهم % 30(@)(@@) % لا بيعة ردعتكم عن دمائهم ، % ولا يمين ، ولا قربى ، ولا ذمم % PageV01P328 31(@)(@@) % هلا صفحتم عن الأسرى بلا سبب ، % للصافحين ببدر عن أسيركم ؟ % 32(@)(@@) % هلا كففتم عن ' الديباج ' سوطكم ؟ % وعن بنات رسول الله شتمكم ؟ % 33(@)(@@) % ما نزهت لرسول الله مهجته % عن السياط ! فهلا نزه الحرم ؟ % 34(@)(@@) % ما نال منهم بنو حرب ، وإن عظمت % تلك الجرائر ، إلا دون نيلكم % 35(@)(@@) % كم غدرة لكم في الدين واضحة ! % وكم دم ل ' رسول الله ' عندكم ؟ ! % 36(@)(@@) % أأنتم آله فيما ترون ، وفي % % أظفاركم ، من بنيه الطاهرين ، دم ؟ % 37(@)(@@) % هيهات ! لاقربت قربى ، ولا رحم ، % يوما ، إذا أقصت الأخلاق والشيم ! % 38(@)(@@) % كانت مودة سلمان له رحما ، % ولم يكن بين نوح وابنه رحم ! % 39(@)(@@) % ياجاهدا في مساويهم يكتمها ! % غدر الرشيد ب ' يحيى ' كيف ينكتم ؟ % 40(@)(@@) % ليس الرشيد كموسى في القياس ولا % ' مأمونكم ك ' الرضا ' إن أنصف % PageV01P329 41(@)(@@) % ذاق الزبيري غب الحنث وانكشفت % عن ' ابن فاطمة ' الأقوال والتهم % 42(@)(@@) % باؤوا بقتل ' الرضا ' من بعد بيعته % وأبصروا بعض يوم رشدهم وعموا % % 43(@)(@@) % يا عصبة شقيت ، من بعدما سعدت ، % ومعشرا هلكوا من بعدما سلموا ! % 44(@)(@@) % لبئس ما لقيت منهم ، وإن بليت % بجانب ' الطف ' تلك الأعظم الرمم ! % 45(@)(@@) % لاعن ' أبي مسلم ' في نصحه صفحوا ، % ولا الهبيري نجى الحلف والقسم % 46(@)(@@) % ولاالأمان لأزد ' الموصل ' اعتمدوا % % فيه الوفاء ، ولاعن عمهم حلموا % % 47(@)(@@) % أبلغ لديك بني العباس مألكة : % لاتدعوا 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms67# ملكها ! ملاكها العجم ! % 48(@)(@@) % أي المفاخر أمست في منابركم ، % وغيركم آمر فيهن ، محتكم ؟ % 49(@)(@@) % وهل يزيدكم من مفخر علم ، % وفي الخلاف ، عليكم يخفق العلم ؟ % 51(@)(@@) % خلوا الفخار لعلامين ، إن سئلوا % % يوم السؤال ، وعمالين إن علموا % % PageV01P330 52(@)(@@) % لايغضبون لغيرالله ، إن غضبوا ، % ولا يضيعون حكم الله إن حكموا % % 53(@)(@@) % تبدوا التلاوة من أبياتهم ، أبدا ، % وفي بيوتكم الأوتار ، والنغم % 57(@)(@@) % مافي ديارهم للخمر معتصر ؛ % ولا بيوتهم للسوء معتصم % 58(@)(@@) % و لا تبيت لهم خنثى ، تنادمهم ؛ % و لا يرى لهم قرد ، له حشم % 59(@)(@@) % الركن ، والبيت ، والأستار منزلهم ، % وزمزم ، والصفا ، والحجر ، والحرم % 61(@)(@@) % صلى الإله عليهم ، أينما ذكروا ، % لأنهم للورى كهف ، ومعتصم % PageV01P331 البحر : مخلع البسيط 1(@)(@@) % أللوم للعاشقين لوم ، % لأن خطب الهوى عظيم % 2(@)(@@) % فكيف ترجون لي سلوا % وعندي المقعد المقيم ؟ % 3(@)(@@) % و مقلتي ، ملؤها دموع ؛ % وأضلعي ، حشوها كلوم ! % 4(@)(@@) % يا قوم ! إني امرؤ كتوم ، % تصحبني مقلة نموم % 5(@)(@@) % ألليل للعاشقين ستر ، % يا ليت أوقاته تدوم ! % 6(@)(@@) % نديمي النجم ، طول ليلي ، % حتى إذا غارت النجوم % 7(@)(@@) % أسلمني الصبح للبلايا ، % فلا حبيب ، ولا نديم % 8(@)(@@) % ب ' رملتي عالج ' رسوم ، % يطول من دونها الرسيم ! % 9(@)(@@) % أنخت فيهن يعملات ، % ما عهد إرقالها ذميم ! % 10(@)(@@) % آجدها قطع كل واد ، % أخصبه نبته العميم % PageV01P332 11(@)(@@) % ردت على الدهر ، في سراها ، % ما وهب النجم ، والنجوم ! % 12(@)(@@) % تلك سجايا من الليالي ، % للبؤس ما يخلق النعيم % 13(@)(@@) % بين ضلوعي هوى مقيم % لآل ' ورقاء ' لا يريم % 14(@)(@@) % يغير الدهر كل شيء ، % و هو صحيح لهم ، سليم ! % 15(@)(@@) % أمنع من رامه سواهم % منه ، كما تمنع الحريم % 16(@)(@@) % وهل يساويهم قريب ؟ % أم هل يدانيهم حميم ؟ % 17(@)(@@) % و نحن في عصبة وأهل ، % تضم أغصاننا أروم % 18(@)(@@) % لم تتفرق بنا خؤول ، % في جذم عز ، ولا عموم ! % 19(@)(@@) % سمت بنا وائل ، وفازت % بالعز أخوالنا ' تميم ' ! % 20(@)(@@) % ودادهم خالص ، صحيح ، % وعهدهم ثابت ، مقيم ! % PageV01P333 21(@)(@@) % فذاك منهم بنا حديث ، % وهو لآبائنا قديم % 22(@)(@@) % نرعاه ، ما طرقت بحمل % أنثى ، وما أطفلت بغوم % 23(@)(@@) % ندني بني عمنا إلينا ، % فضلا ، كما يفعل الكريم % 24(@)(@@) % أيد لهم ، عند كل خطب ، % يثني بها الفادح الجسيم ! % 25(@)(@@) % وألسن ، دونهم ، حداد % لد إذا قامت الخصوم % 26(@)(@@) % لم تنأ ، عنا ، لهم قلوب ، % وإن نأت منهم ، جسوم % 27(@)(@@) % فلا عدمنا لهم ثناء ، % كأنه اللؤلؤ النظيم % 28(@)(@@) % لقد 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms68# نمتنا لهم أصول ، % ما مس أعراقهن لوم % 29(@)(@@) % تبقى ويبقون في نعيم % ما بقي الركن ، والحطيم ! % PageV01P334 البحر : سريع 1(@)(@@) % لما تبينت بأني له % أزداد حبا ، كلما لاموا ، % 2(@)(@@) % وددت إذ ذاك ، بأن الورى % % فيك ، مدى الأيام ، لوام % PageV01P335 البحر : طويل 1(@)(@@) % أما إنه ربع الصبا ومعالمه % فلا عذر إن لم ينفذ الدمع ساجمه % 2(@)(@@) % لئن بت تبكيه خلاء فطالما % % نعمت به ، دهرا ، وفيه نواعمه % 3(@)(@@) % رياح عفته ، وهي أنفاس عاشق % ووبل سقاه ، والجفون غمائمه % 4(@)(@@) % وظلامة ، قلدتها حكم مهجتي ، % ومن ينصف المظلوم والخصم حاكمه ؟ % 5(@)(@@) % مهاة ، لها من كل وجه مصونه ، % وخود لها من كل دمع كرائمه % 6(@)(@@) % وليل كفرعيها قطعت وصاحبي % % رقيق غرار ، مخذم الحد صارمه % 7(@)(@@) % تغذ بي القفر الفضاء شملة % سواء عليها نجده وتهائمه % 8(@)(@@) % تصاحبني آرامه وظباؤه ، % وتؤنسني أصلاله وأراقمه % 9(@)(@@) % وأي بلاد الله لم أنتقل بها ! % ولا وطئتها من بعيري مناسمه ! % 10(@)(@@) % ونحن أناس ، يعلم الله أننا ، % وخود لها من كل دمع كرائمه % PageV01P336 11(@)(@@) % إذا ولد المولود منا فإنما ال % وتؤنسني أصلاله وأراقمه % 12(@)(@@) % إلا مبلغ عني ، ابن عمي ، رسالة % بثثت بها بعض الذي أنا كاتمه % 13(@)(@@) % أيا جافيا ! ما كنت أخشى جفاؤه % وإن كثرت عذاله ، ولوائمه % 14(@)(@@) % كذلك حظي من زماني وأهله % يصارمني الخل الذي لا أصارمه % 15(@)(@@) % وإن كنت مشتاقا إليك فإنه % ليشتاق صب إلفه ، وهو ظالمه % 16(@)(@@) % أودك ودا ، لا الزمان يبيده ، % ولا النأي يفنيه ، ولا الهجر ثالمه % 17(@)(@@) % وأنت وفي لا يذم وفاؤه ، % وأنت كريم ليس تحصى مكارمه % 18(@)(@@) % أقيم به أصل الفخار وفرعه ، % وشد به ركن العلا ، ودعائمه % 19(@)(@@) % أخو السيف تعديه نداوة كفه % فيحمر خداه ، ويخضر قائمه % 20(@)(@@) % أعندك لي عتبى فأحمل ما مضى % % وأبني رواق الود ، إذ أنت هادمه % PageV01P337 البحر : مجزوء الرمل 1(@)(@@) % أيها الغازي ، الذي يغ % زو بجيش الحب جسمي ! % 2(@)(@@) % ما يقوم الأجر في غز % % وك للروم بإثمي ! % 4(@)(@@) % كم ليلة شهباء ، إذ برزت لنا ، % سقتك الغوادي من متون الغمائم % 9(@)(@@) % من ثغرها في جنح ليل مظلم % % 27(@)(@@) % كتمت هواي وقابلته بهجرة ، % في جمرها المتلهب المتضرم % PageV01P338 البحر : كامل تام 1(@)(@@) % و أديبة إخترتها عربية % تعزى إلى الجد الكريم ، وتنتمي % % 2(@)(@@) % محجوبة لم تبتذل ، أمارة % لم تأتمر ، مخدومة 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms69# لم تخدم % 3(@)(@@) % لو لم يكن لي فيك إلا أنني % % بك قد غنيت عن ارتكاب المحرم % 4(@)(@@) % و لقد نزلت فلا تظني غيره % مني بمنزلة المحب المكرم % PageV01P339 البحر : وافر تام 1(@)(@@) % تسمع ، في بيوت بني كلاب ، % بني البنا تنوح على تميم % 2(@)(@@) % بكرهي إن حملت بني أبيه % وأسرته على النأي العظيم % 3(@)(@@) % رجعت ، وقد ملكتهم جميعا ، % إلى الأعراق والأصل الكريم % PageV01P340 البحر : وافر تام 1(@)(@@) % يعز على الأحبة ، ب ' الشام ' ، % حبيب ، بات ممنوع المنام % 4(@)(@@) % وإني للصبور على الرزايا ، % ولكن الكلام على الكلام % 5(@)(@@) % جروح لا يزلن يردن مني % % على جرح قريب العهد ، دام % 8(@)(@@) % تاملني ' الدمستق ' إذ رآني ، % فأبصر صيغة الليث ، الهمام % 9(@)(@@) % أتنكرني كأنك لست تدري % % بأني ذلك البطل ، المحامي % % 10(@)(@@) % وأني إذ نزلت على دلوك ، % تركتك غير متصل النظام % 11(@)(@@) % ولما أن عددت صليب رأيي % % تحلل عقد رأيك في المقام % 12(@)(@@) % وكنت ترى الأناة ، وتدعيها ، % فأعجلك الطعان عن الكلام % 13(@)(@@) % و بت مؤرقا ، من غير سهد ، % حمى جفنيك طيب النوم حام % 14(@)(@@) % و لا أرضى الفتى ما لم يكمل ، % برأي الكهل ، إقدام الغلام % PageV01P341 15(@)(@@) % فلا هنئتها نعمى بأسري ، % ولا وصلت سعودك بالتمام % 16(@)(@@) % أما من أعجب الأشياء علج ، % يعرفني الحلال من الحرام % 17(@)(@@) % و تكنفه بطارقة تيوس ، % تباري بالعثانين الضخام % 18(@)(@@) % لهم خلق الحمير فلست تلقى % % فتى منهم يسير بلا حزام % 19(@)(@@) % يريغون العيوب ، وأعجزتهم ، % وأي العيب يوجد في الحسام ! ؟ % 20(@)(@@) % و أصعب خطة ، وأجل أمر % مجالسة اللئام على الكرام % 22(@)(@@) % أبيت مبرأ من كل عيب ، % و أصبح ، سالما من كل ذام % 24(@)(@@) % ومن لقي الذي لاقيت هانت % عليه موارد الموت الزؤام % 25(@)(@@) % ثناء طيب ، لا خلف فيه ، % وآثار كآثار الغمام % 26(@)(@@) % و علم فوارس الحيين أني % % قليل من يقوم لهم مقامي % % PageV01P342 27(@)(@@) % وفي طلب الثناء مضى بجير % وجاد بنفسه كعب بن مام % 28(@)(@@) % ألام على التعرض للمنايا ، % ولي سمع أصم عن الملام % 31(@)(@@) % بنو الدنيا إذا ماتوا سواء % ولو عمر المعمر ألف عام % 33(@)(@@) % إذا ما لاح لي لمعان برق % بعثت إلى الأحبة بالسلام % PageV01P343 البحر : خفيف تام 1(@)(@@) % لست بالمستضيم من هو دوني ، % اعتداء ، ولست بالمستضام % 2(@)(@@) % أبذل الحق للخصوم ، إذا ما % % عجزت عنه قدرة الحكام % 3(@)(@@) % لا تخطى 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms70# إلى المظالم كفي ، % حذرا من أصابع الأيتام % PageV01P344 البحر : خفيف تام 1(@)(@@) % ودعوا ، خشية الرقيب ، بإيما % % ء ، فودعت ، خشية اللوام % 2(@)(@@) % لم أبح بالوداع ، جهرا ولكن % كان جفني فمي ، ودمعي كلامي ! % PageV01P345 البحر : سريع 1(@)(@@) % أيا معافي من رسيس الهوى ! % يهنيك حال السالم الغانم % 2(@)(@@) % أعانك الله بخير ، أما % % تكون لي عونا على الظالم ؟ ! % PageV01P346 البحر : كامل تام 1(@)(@@) % و خريدة ، كرمت على آبائها ؛ % وعلى بوادر خيلنا لم تكرم % 2(@)(@@) % خطبت بحد السيف حتى زوجت % كرها ، وكان صداقها للمقسم % 3(@)(@@) % راحت وصاحبها بعرس حاضر ، % يرضي الآله ، وأهلها في مأتم % PageV01P347 البحر : وافر تام 1(@)(@@) % لنا بيت ، على عنق الثريا ، % بعيد مذاهب الأطناب ، سام % 2(@)(@@) % تظلله الفوارس بالعوالي ، % وتفرشه الولائد بالطعام % PageV01P348 البحر : مجزوء الكامل 1(@)(@@) % يا من رضيت بفرط ظلمه % ودخلت ، طوعا ، تحت حكمه % 2(@)(@@) % ألله يعلم ما لقي % % ت من الهوى ، وكفى بعلمه ! % 3(@)(@@) % هب للمقر بذنبه ! % واصفح له عن عظم جرمه % 4(@)(@@) % إني أعيذك أن تبو % % ء بقتله ، وبحمل إثمه % PageV01P349 البحر : كامل تام 1(@)(@@) % هبه أساء ، كما زعمت ، فهب له % % وارحم تضرعه ، وذل مقامه ! % 2(@)(@@) % بالله ، ربك ، لم فتكت بصبره % ونصرت بالهجران جيش سقامه ؟ % 3(@)(@@) % فرقت بين جفونه ومنامه % وجمعت بين نحوله وعظامه % PageV01P350 البحر : بسيط تام 1(@)(@@) % إذا مررت بواد ، جاش غاربه % فاعقل قلوصك وانزل ، ذاك وادينا % % 2(@)(@@) % وإن عبرت بناد لا تطيف به % أهل السفاهة ، فاجلس ، ذاك نادينا ! % 3(@)(@@) % نغير في الهجمة الغراء ننحرها % % حتى ليعطش ، في الأحيان ، راعينا % % 4(@)(@@) % و تجفل الشول بعد الخمس صادية % إذا سمعن على الأمواه حادينا % % 5(@)(@@) % و نفتدي الكوم أشتاتا مروعة % لا تأمن الدهر إلا من أعادينا % % 6(@)(@@) % ويصبح الضيف أولانا بمنزلنا ، % نرضى بذاك ، ويمضي حكمه فينا % % PageV01P351 البحر : كامل تام 1(@)(@@) % و كنى الرسول عن الجواب تظرفا % ولئن كنى ، فلقد علمنا ما عنى % % 2(@)(@@) % قل يا رسول ، ولا تحاش ! فإنه % لا بد منه أساء بي أم أحسنا ! % 3(@)(@@) % ألذنب لي فيما جناه ، لأنني % % مكنته من مهجتي فتمكنا % % PageV01P352 البحر : طويل 1(@)(@@) % ويغتابني من لو كفاني غيبه % لكنت له العين البصيرة والأذنا % % 2(@)(@@) % و عندي من الأخبار ما لو ذكرته % إذا قرع المغتاب من ندم سنا % % PageV01P353 البحر : مجزوء الرمل 1(@)(@@) % اطرحوا الأمر إلينا ، % و احملوا الكل 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms71# علينا % % 2(@)(@@) % إننا قوم ، إذا ما % % صعب الأمر ، كفينا % % 3(@)(@@) % و إذا ما ريم منا % % موطن الذل أبينا % % 4(@)(@@) % وإذا ما هدم ال % عز بنو العز بنينا % % PageV01P354 البحر : وافر تام 1(@)(@@) % يعيب علي أن سميت نفسي % % وقد أخذ القنا منهم ومنا % % 2(@)(@@) % فقل للعلج : لو لم أسم نفسي % % لسماني السنان لهم وكنى % % PageV01P355 البحر : خفيف تام 1(@)(@@) % قد أعانتني الحمية لما % % لم أجد من عشيرتي أعوانا % % 2(@)(@@) % لا أحب الجميل من سر مولى % لم يدع ما كرهته إعلانا % % 3(@)(@@) % إن يكن صادق الوداد فهلا % ترك الهجر للوصال مكانا ! ؟ % PageV01P356 البحر : وافر تام 1(@)(@@) % فإن أهلك فعن أجل مسمى سلي فتيات هذا الحي عني % % يقلن بما رأين وما سمعنه % 2(@)(@@) % ألست أمدهم ، لذوي ، ظلا ، % ألست أعدهم ، للقوم ، جفنه % 3(@)(@@) % ألست أقرهم بالضيف ، عينا % ألست أمرهم ، في الحرب لهنه % 5(@)(@@) % رضيت العاذلات ، وما يقلنه ، % وإن أصبحت عصاء لهنه % 6(@)(@@) % و كم فجر سبقن إلى ملامي % % فعدت ضحى ولم أحفل بهنه % 7(@)(@@) % وراجعة إلي ، تقول سرا : % أعود إلى نصيحته لعنه % 8(@)(@@) % فلما لم تجد طمعا تولت ، % وقالت في ، عاتبة وقلنه % 9(@)(@@) % أريتك ما تقول بنات عمي % % إذا وصف النساء رجالهنه % 10(@)(@@) % أما والله لا يمسين ، حسرى ، % يلفقن الكلام ، ويعتذرنه % 11(@)(@@) % و لكن سوف أوجدهن وصفا % و أبسط في المديح كلامهنه % PageV01P357 12(@)(@@) % متى ما يدن من أجل كتابي % % أمت ، بين الأعنة والأسنه % PageV01P358 البحر : وافر تام 1(@)(@@) % بكرن يلمنني ، ورأين جودي % % على الأرماح بالنفس المضنه % 2(@)(@@) % فقلت لهن : هل فيكن باق % على نوب الزمان ، إذا طرقنه ؟ % 3(@)(@@) % و إن يكن الحذار من المنايا % % سبيلا للحياة ، فلم تمتنه ؟ % 4(@)(@@) % سأشهدها على ما كان مني % % ببسطي في الندى ، بكلامهنه % 5(@)(@@) % و أجعلكن أصدق في قولا % إذا وصف النساء رجالهنه % 6(@)(@@) % فإن أهلك فعن أجل مسمى % % سيأتيني ، ولو ما بينكنه % 7(@)(@@) % و إن أسلم فقرض سوف يوفى ، % و أتبعكن إن قدمتكنه % 8(@)(@@) % فلا يأمرنني بمقام ذل % فما أنا بالمطيع إذا أمرنه % 9(@)(@@) % وموت في مقام العز أشهى ، % إلى الفرسان ، من عيش بمهنه % PageV01P359 البحر : بسيط تام 1(@)(@@) % يا من رجعت ، على كره ، لطاعته ، % قد خالف القلب لما طاوع البدن % 2(@)(@@) % وكل ما شئت من أمر رضيت به ، % وكل ما اخترته ، عندي 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms72# هو الحسن % 3(@)(@@) % وكلما سرني أو ساءني سبب % فأنت فيه علي ، الدهر ، مؤتمن % PageV01P360 البحر : طويل 1(@)(@@) % وإني لأنوي هجره فيردني وإني لأنوي هجره فيردني % % هوى ، بين أثناء الضلوع ، دفين % 2(@)(@@) % فيغلظ قلبي ، ساعة ثم ينثني % % وأقسو عليه ، تارة ، ويلين % 3(@)(@@) % وقد كان لي عن وده كل مذهب ، % و لكن مثلي بالإخاء ضنين % 4(@)(@@) % و لا غرو أن أعنو له ، بعد عزة ، % فقدري ، في عز الحبيب ، يهون ! % PageV01P361 البحر : طويل 1(@)(@@) % بخلت بنفسي أن يقال مبخل ، % وأقدمت جبنا أن يقال جبان % 2(@)(@@) % وملكي بقايا ما وهبت : مفاضة ، % % PageV01P362 البحر : طويل 1(@)(@@) % أيا راكبا ، نحو الجزيرة ، جسرة % عذافرة ، إن الحديث شجون ! % 2(@)(@@) % من الموخدات الضمر اللاء وخدها % % كفيل بحاجات الرجال ضمين % 3(@)(@@) % تحمل إلى ' القاضي ' سلامي وقل له : % ألا إن قلبي ، مذ حزنت ، حزين % 4(@)(@@) % و إن فؤادي ، لافتقاد أسيره ، % أسير ، بأيدي الحادثات ، رهين % 5(@)(@@) % أحاول كتمان الذي بي من الأسى % % وتأبى غروب ثرة وشؤون % 6(@)(@@) % بمن أنا في الدنيا على السر واثق ، % و طرفي نموم ، والدموع تخون % 7(@)(@@) % يضن زماني بالثقات ؛ وإنني % % بسري ، على غير الثقات ، ضنين % 8(@)(@@) % لعل زمانا بالمسرة ينثني ؛ % وعطفة دهر باللقاء تكون % 9(@)(@@) % ألا لا يرى الأعداء فيك غضاضة ، % فللدهر بؤس ، قد علمت ، ولين % 10(@)(@@) % و أعظم ما كانت همومك تنجلي ، % وأصعب ما كان الزمان يهون % PageV01P363 11(@)(@@) % ألا ليت شعري هل أنا الدهر ، واجد % قرينا ، له حسن الوفاء قرين ؟ % 12(@)(@@) % فأشكو ويشكو ما بقلبي وقلبه ، % كلانا ، على نجوى أخيه ، أمين % 13(@)(@@) % و في بعض من يلقي إليك مودة % عدو ، إذا كشفت عنه ، مبين % 14(@)(@@) % إذا غير البعد الهوى فهوى أبي % % حصين منيع ، في الفؤاد ، حصين % 15(@)(@@) % فلا برحت بالحاسدين كآبة ، % ولا هجعت للشامتين عيون % PageV01P364 البحر : مجزوء الكامل 1(@)(@@) % أشفقت من هجري فغل % % بت الظنون على اليقين % 2(@)(@@) % وضننت بي ، فظننت بي ، % و الظن من شيم الضنين ! % PageV01P365 البحر : مخلع البسيط 1(@)(@@) % لطيرتي بالصداع نالت % فوق منال الصداع مني % % 2(@)(@@) % و جدت فيه اتفاق سوء % صدعني مثل صد عني % % PageV01P366 البحر : كامل تام 1(@)(@@) % الحر يصبر ، ما أطاق تصبرا % في كل آونة وكل زمان % 2(@)(@@) % ويرى مساعدة الكرام مروءة ، % ما سالمته نوائب الحدثان % 3(@)(@@) % ويذوب بالكتمان إلا أنه % أحواله تنبي عن 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms73# الكتمان % 4(@)(@@) % فإذا تكشف ، واضمحلت حاله % ألفيته يشكو بكل لسان % 6(@)(@@) % وإذا نبا بي منزل فارقته ؛ % والله يلطف بي بكل مكان % PageV01P367 البحر : مجزوء الكامل 1(@)(@@) % لا غرو إن فتنتك بال % لحظات فاترة الجفون % 2(@)(@@) % فمصارع العشاق ما % % بين الفتور إلى الفتون % 3(@)(@@) % اصبر ! فمن سنن الهوى % % صبر الظنين على الظنين % PageV01P368 البحر : سريع 1(@)(@@) % علي من عيني عينان % تبوح للناس بكتمان % 2(@)(@@) % يا ظالمي ، للشرب سكر ولي % % من غنج ألحاظك سكران % 3(@)(@@) % وجهك والبدر ، إذا أبرزا ، % لأعين العالم ، بدران % PageV01P369 البحر : متقارب تام 1(@)(@@) % أنافس فيك بعلق ثمين ، % ويغلبني فيك ظن الظنين % 3(@)(@@) % وكنت حلفت على غضبة % فعدت ، وكفرت عنها يميني % % PageV01P370 البحر : متقارب تام 1(@)(@@) % حللت من المجد أعلى مكان ، % وبلغك الله أقصى الأماني % % 2(@)(@@) % فإنك ، لا عدمتك العلا ، % أخ لا كإخوة هذا الزمان % 3(@)(@@) % صفاؤك في البعد مثل الدنو ، % وودك في القلب مثل اللسان % 4(@)(@@) % كسونا أخوتنا بالصفاء % كما كسيت بالكلام المعاني % % PageV01P371 البحر : بسيط تام 1(@)(@@) % ما كنت مذ كنت إلا طوع خلاني ، % ليست مؤاخذة الإخوان من شاني % % 2(@)(@@) % يجني الخليل ، فأستحلي جنايته % حتى أدل على عفوي وإحساني % % 3(@)(@@) % ويتبع الذنب ذنبا حين يعرفني % % عمدا ، وأتبع غفرانا بغفران % 4(@)(@@) % يجني علي وأحنو ، صافحا أبدا ، % لا شيء أحسن من حان على جان % PageV01P372 البحر : بسيط تام 1(@)(@@) % بني زرارة لو صحت طرائقكم % لكنتم عندنا في المنزل الداني % % 2(@)(@@) % لكن جهلتهم لدينا حق أنفسكم ، % وباع بائعكم ربحا بخسران % 3(@)(@@) % فإن تكونوا براء ، من جنايته ؛ % فإن من رفد الجاني هو الجاني % % 4(@)(@@) % ما بالكم ! يا أقل الله خيركم % لا تغضبون لهذا الموثق العاني ؟ % 5(@)(@@) % جار نزعناه قسرا في بيوتكم ، % والخيل تعصب فرسانا بفرسان % 6(@)(@@) % إذ لاتردون عن أكناف أهلكم % شوازب الخيل من مثنى ووحدان % 7(@)(@@) % ب ' المرج ' ، إذ ' أم بسام ' تناشدني : % بنات عمك ! يا ' حار بن حمدان ' % 8(@)(@@) % فظلت أثني صدور الخيل ساهمة % بكل مضطغن بالحقد ، ملآن % 9(@)(@@) % ونحن قوم ، إذا عدنا بسيئة % على العشيرة ، أعقبنا بإحسان % PageV01P373 البحر : كامل تام 1(@)(@@) % أتعز أنت على رسوم مغان ، % فأقيم للعبرات سوق هوان % 2(@)(@@) % فرض علي ، لكل دار وقفة % تقضي حقوق الدار والأجفان % 3(@)(@@) % لولا تذكر من هويت ب ' حاجر ' % لم أبك فيه مواقد النيران % 4(@)(@@) % ولقد أراه ، قبيل 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms74# طارقة النوى ، % مأوى الحسان ، ومنزل الضيفان % 5(@)(@@) % ومكان كل مهند ، ومجر ك % ل مثقف ، ومجال كل حصان % 6(@)(@@) % نشر الزمان عليه ، بعد أنيسه ، % حلل الفناء ؛ وكل شيء فان ! % 7(@)(@@) % ولقد وقفت فسرني ما ساءني % % فيه ، وأضحكني الذي أبكاني % % 8(@)(@@) % ورأيت في عرصاته مجموعة % أسد الشرى ، وربائب الغزلان % 9(@)(@@) % يا واقفان ، معي ، على الدار اطلبا % % غيري لها ، إن كنتما تقفان ! % 10(@)(@@) % منع الوقوف ، على المنازل ، طارق % أمر الدموع بمقلتي ونهاني % % PageV01P374 11(@)(@@) % فله ، إذا ونت المدامع أو همت ، % عصيان دمعي ، فيه ، أو عصياني % % 12(@)(@@) % إنا لجمعنا البكاء ، وكلنا % % يبكي على شجن من الأشجار % 13(@)(@@) % ولقد جعلت الحب ستر مدامعي % % ولغيره عيناي تنهملان % 14(@)(@@) % أبكي الأحبة بالشآم ، وبيننا % % قلل الدروب وشاطئا جيحان % 15(@)(@@) % وحسبت فيما أشعلت نيراني % % مثلي على كنف من الأحزان % 16(@)(@@) % فضلت لدي مدامع فبكيت لل % % باكي بها ، وولهت للولهان % 17(@)(@@) % ما لي جزعت من الخطوب وإنما % % أخذ المهيمن بعض ما أعطاني % % 18(@)(@@) % ولقد سررت كما غممت عشائري % % زمنا ، وهنأني الذي عناني % % 19(@)(@@) % وأسرت في مجرى خيولي غازيا % وحبست فيما أشعلت نيراني % % 20(@)(@@) % يرمي بنا ، شطر البلاد ، مشيع % صدق الكريهة ، فائض الإحسان % PageV01P375 21(@)(@@) % بلد ، لعمرك ، لم أزل زواره % مع سيد قرم أغر ، هجان % 22(@)(@@) % إنا لنلقى الخطب فيك وغيره % بموفق عند الخطوب ، معان % 24(@)(@@) % ولطالما حطمت صدر مثقف ، % ولطالما أرعفت أنف سنان % 25(@)(@@) % ولطالما قدت الجياد إلى الوغى % % قب البطون ، طويلة الأرسان % 26(@)(@@) % وأنا الذي ملأ البسيطة كلها % % ناري ، وطنب في السماء دخاني % % 32(@)(@@) % إن لم تكن طالت سني فإن لي % % رأي الكهول ونجدة الشبان % 33(@)(@@) % قمن ، بما ساء الأعادي ، موقفي ، % والدهر يبرز لي مع الأقران % 34(@)(@@) % يمضي الزمان ، وما ظفرت بصاحب % إلا ظفرت بصاحب خوان % 35(@)(@@) % يا دهر خنت مع الأصادق خلتي % % وغدرت بي في جملة الإخوان % 36(@)(@@) % لكن سيف الدولة المولى الذي % % لم أنسه وأراه لا ينساني % % PageV01P376 37(@)(@@) % أيضيعني من لم يزل لي حافظا ، % كرما ، ويخفضني الذي أعلاني ! % 38(@)(@@) % خدن الوفاء ، ولا وفي غيره ، % يرضى أعاني ضيق حالة عان % 39(@)(@@) % إني أغار على مكاني أن أرى % % فيه رجالا لا تسد مكاني % % 40(@)(@@) % أو أن تكون وقيعة أو غارة % ما لي بها أثر مع الفتيان % 44(@)(@@) % إقرا السلام ، على الذين سيوفهم 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms75# % ما أحرجوا ، عطفوا على هامان % 47(@)(@@) % سيف الهدى من حد سيفك يرتجى % % يوم ، يذل الكفر للإيمان % 48(@)(@@) % هذي الجيوش ، تجيش نحو بلادكم % % محفوفة بالكفر والصلبان % 49(@)(@@) % ألبغي أكثر ما تقل خيولهم % والبغي شر مصاحب الإنسان % 50(@)(@@) % ليسوا ينون ، فلا تنوا في أمركم ، % لا ينهض الواني لغير الواني % % 51(@)(@@) % غضبا لدين الله أن لا تغضبوا % % لم يشتهر في نصره سيفان % PageV01P377 52(@)(@@) % حتى كأن الوحي فيكم منزل ، % ولكم تخص فضائل القرآن % 53(@)(@@) % قد أغضبوكم فاغضبوا ، وتأهبوا % % للحرب أهبة ثائر ، غضبان % 54(@)(@@) % ف ' بنو كلاب ' وهي قل أغضبت % فدهت قبائل ' مسهر بن قنان ' % 55(@)(@@) % وبنو عباد ، حين أحرج حارث % جروا التخالف في ' بني شيبان ' % 56(@)(@@) % خلا ' عديا ' ، وهو صاحب ثأرهم % كرما ، ونالوا الثأر بابن أبان % 57(@)(@@) % والمسلمون ، بشاطيء ' اليرموك ' لم % % 58(@)(@@) % وحماة ' هاشم ' حين أخرج صدرها % % جروا البلاء على ' بني مروان ' % 59(@)(@@) % والتغلبيون احتموا عن مثلها % % فعدوا على العادين ب ' السلان ' % 60(@)(@@) % وبغى على ' عبس ' ' حذيفة ' فاشتفت % منه صوارمهم ومن ذبيان % 61(@)(@@) % وسراة ' بكر ' ، بعد ضيق فرقوا % % جمع الأعاجم عن ' أنوشروان ' % PageV01P378 62(@)(@@) % أبقت لبكر مفخرا ، وسما لها ، % من دون قومهما ، يزيد وهاني % % 63(@)(@@) % المانعين العنقفير بطعنهم ، % والثائرين بمقتل ' النعمان ' ! % PageV01P379 البحر : كامل تام 1(@)(@@) % ما صاحبي إلا الذي من بشره % عنوانه في وجهه ولسانه % 2(@)(@@) % كم صاحب لم أغن عن إنصافه % في عسره ، وغنيت عن إحسانه % PageV01P380 البحر : طويل 1(@)(@@) % % علاها ، وإن ضاق الخناق حماها % % 2(@)(@@) % و ما اشتورت إلا وأصبح شيخها ، % ولا أحربت إلا وكان فتاها % % 3(@)(@@) % ولا ضربت بين القباب قبابه ، % وأصبح مأوى الطارقين سواها % % PageV01P381 البحر : بسيط تام 1(@)(@@) % يا ليلة ، لست أنسى طيبها أبدا ، % كأن كل سرور حاضر فيها % % 2(@)(@@) % باتت ، وبت ، وبات الزق ثالثنا % % حتى الصباح تسقيني وأسقيها % % 3(@)(@@) % كأن سود عناقيد بلمتها ، % أهدت سلافتها صرفا ، إلى فيها % % PageV01P382 البحر : وافر تام 1(@)(@@) % لقد علمت سراة الحي أنا % % لنا الجبل الممنع جانباه % 2(@)(@@) % يفيء الرغبون إلى ذراه ، % و يأوي الخائفون إلى حماه % PageV01P383 البحر : مخلع البسيط 1(@)(@@) % % خلوت ، يوم الفراق ، منه % 2(@)(@@) % ما تركت لي الجفون إلا % ما استنزلتني الخدود عنه % 3(@)(@@) % قد طال يا قلب ما تلاقي ، % إن مات ذو صبوة فكنه % PageV01P384 البحر : كامل تام 1(@)(@@) % خفض عليك ! ولا تبت قلق الحشا % % مما 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms76# يكون ، وعله ، وعساه % 2(@)(@@) % فالدهر أقصر مدة مما ترى ، % وعساك أن تكفى الذي تخشاه % PageV01P385 البحر : خفيف تام 1(@)(@@) % لست أرجو النجاة ، من كل ما أخ % شاه ، إلا بأحمد وعلي % 2(@)(@@) % وببنت الرسول فاطمة الطه % ر ، وسبطيه والإمام علي % 3(@)(@@) % و التقي النقي باقر علم ال % % له فينا ، محمد بن علي % 4(@)(@@) % و ابنه ' جعفر ' و ' موسى ' ومولا % % نا علي ، أكرم به من علي ! % 5(@)(@@) % وأبي جعفر سمي رسول ال % % له ، ثم ابنه الزكي ' علي ' % 6(@)(@@) % و ابنه ' العسكري ' والقائم المظ % % هر حقي محمد بن علي % 7(@)(@@) % فيهم أرتجي بلوغ الأماني % % PageV01P386 البحر : هزج 1(@)(@@) % عرفت الشر لا للشر % لكن لتوقيه % 2(@)(@@) % ومن لم يعرف الشر % من الناس يقع فيه % PageV01P387 البحر : مجتث 1(@)(@@) % قلبي يحن إليه % نعم ، ويحنو عليه % 2(@)(@@) % و ما جنى أو تجنى % % إلا اعتذرت إليه % 3(@)(@@) % فكيف أملك قلبي ، % والقلب رهن لديه ؟ % 4(@)(@@) % وكيف أدعوه عبدي ، % و عهدتي في يديه ؟ % PageV01P388 البحر : مجتث 1(@)(@@) % ألورد في وجنتيه ، % والسحر في مقلتيه ! % 2(@)(@@) % وإن عصاه لساني % % فالقلب طوع يديه ! % 3(@)(@@) % يا ظالما ، لست أدري % % أدعو له ، أم عليه ! % 4(@)(@@) % أنا إلى الله مما % % دفعت منه إليه ! % PageV01P389 البحر : مجزوء الكامل 1(@)(@@) % لمن الجدود الأكرمو % % ن ، من الورى ، إلا ليه ؟ % 2(@)(@@) % من ذا يعد ، كما أعد ، % من الجدود العاليه ؟ % 3(@)(@@) % من ذا يقوم لقومه ، % بين الصفوف ، مقاميه ! ؟ % 4(@)(@@) % من ذا يرد صدوره % ن ، إذا أغرن علانيه ؟ % 5(@)(@@) % أحمي حريمي أن يبا % % ح ، ولست أحمي ماليه ! % 6(@)(@@) % وتخافني كوم اللقا % % ح ، وقد أمن عداتيه % 7(@)(@@) % تمسي ، إذا طرق الضيو % % ف ، فناؤها بفنائيه % 8(@)(@@) % ناري ، على شرف تأج % % ج ، للضيوف الساريه % 9(@)(@@) % يا نار ، إن لم تجلبي % % ضيفا ، فلست بناريه ! % 10(@)(@@) % والعز مضروب السرا % % دق والقباب الجاريه % PageV01P390 11(@)(@@) % يجني ولا يجنى علي % ه ، ويتقي الجلى بيه ! % PageV01P391 البحر : مجزوء الكامل 1(@)(@@) % انظر لضعفي ، ياقوي ! % وكن لفقري ، يا غني ! % 2(@)(@@) % أحسن إلي ؛ فإنني % % عبد إلى نفسي مسي ! % PageV01P392 البحر : مجزوء الكامل 1(@)(@@) % لولا العجوز بمنبج % ما خفت أسباب المنيه % 2(@)(@@) % ولكان لي ، عما سأل % ت من الفدا ، نفس أبيه % 3(@)(@@) % لكن أردت مرادها ، % ولو انجذبت إلى الدنيه % 4(@)(@@) % وأرى محاماتي علي % ها أن تضام من الحميه % 5(@)(@@) % أمست ب ' منبج ' ، حرة % بالحزن ، من بعدي ، حريه 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms77# % 6(@)(@@) % لو كان يدفع حادث ، % أو طارق بجميل نيه % 7(@)(@@) % لم تطرق نوب الحوا % % دث أرض هاتيك التقيه % 8(@)(@@) % لكن قضاء الله ، وال % % أحكام تنفذ في البريه % 9(@)(@@) % والصبر يأتي كل ذي % % رزء على قدر الرزيه % 10(@)(@@) % لا زال يطرق منبجا ، % في كل غادية ، تحيه % PageV01P393 11(@)(@@) % فيها التقى ، والدين مج % % موعان في نفس زكيه % 12(@)(@@) % يا أمتا ! لا تحزني ، % وثقي بفضل الله فيه ! % 13(@)(@@) % يا أمتا ! لا تيأسي ، % لله ألطاف خفيه % 14(@)(@@) % كم حادث عنا جلا % % ه ، وكم كفانا من بليه % 15(@)(@@) % أوصيك بالصبر الجمي % % ل ! فإنه خير الوصيه ! % PageV01P394 البحر : رجز تام 1(@)(@@) % ما العمر ما طالت به الدهور ، % العمر ما تم به السرور ! % 2(@)(@@) % أيام عزي ، ونفاذ أمري % % هي التي أحسبها من عمري % % 3(@)(@@) % ما أجور الدهر على بنيه ! % وأغدر الدهر بمن يصفيه ! % 4(@)(@@) % لو شئت مما قد قللن جدا % % عددت أيام السرور عدا % % 5(@)(@@) % أنعت يوما ، مر لي ب ' الشام ' ، % ألذ ما مر من الأيام % 6(@)(@@) % دعوت بالصقار ، ذات يوم ، % عند انتباهي ، سحرا من نومي % % 7(@)(@@) % قلت له : اختر سبعة كبارا % كل نجيب يرد الغبارا % % 8(@)(@@) % يكون للأرنب منها اثنان ، % وخمسة تفرد للغزلان % 9(@)(@@) % واجعل كلاب الصيد نوبتين % ترسل منها اثنين بعد اثنين % % 10(@)(@@) % و لا تؤخر أكلب العراض ! % فهن حتف للظباء قاض % PageV01P395 11(@)(@@) % ثم تقدمت إلى الفهاد % والبازيارين بالاستعداد % 12(@)(@@) % وقلت : إن خمسة لتقنع % والزرقان : الفرخ والملمع % 13(@)(@@) % و أنت ، يا طباخ ، لا تباطا ! % عجل لنا اللبات والأوساطا ! % 14(@)(@@) % ويا شرابي البلقسيات % تكون بالراح ميسرات % 15(@)(@@) % بالله لا تستصحبوا ثقيلا ! % واجتنبوا الكثرة والفضولا ! % 16(@)(@@) % ردوا فلانا ، وخذوا فلانا ! % وضمنوني صيدكم ضمانا ! % 17(@)(@@) % فاخترت ، لما وقفوا طويلا ، % عشرين ، أو فويقها قليلا % % 18(@)(@@) % عصابة ، أكرم بها عصابه ، % معروفة بالفضل والنجابه % % 19(@)(@@) % ثم قصدنا صيد عين قاصر % مظنة الصيد لكل خابر % 20(@)(@@) % جئناه والشمس ، قبيل المغرب % تختال في ثوب الأصيل المذهب % % PageV01P396 21(@)(@@) % وأخذ الدراج في الصياح ، % مكتنفا من سائر النواحي % % 22(@)(@@) % في غفلة عنا وفي ضلال ، % ونحن قد زرناه بالآجال % 23(@)(@@) % يطرب للصبح ، وليس يدري % % أن المنايا في طلوع الفجر % 24(@)(@@) % حتى إذا أحسست بالصباح % ناديتهم : ' حي على الفلاح ! ' % 25(@)(@@) % نحن نصلي والبزاة تخرج % مجردات ، والخيول تسرج % 26(@)(@@) % فقلت للفهاد : فامض وانفرد % وصح بنا ، إن عن 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms78# ظبي ، واجتهد % 27(@)(@@) % فلم يزل ، غير بعيد عنا ، % إليه يمضي ما يفر منا % % 28(@)(@@) % وسرت في صف من الرجال ، % كأنما نزحف للقتال % 29(@)(@@) % فما استوينا كلنا حتى وقف % لما رآنا مال بالأعناق % 30(@)(@@) % ثم أتاني عجلا ، قال : ألسبق ! % فقلت : إن كان العيان قد صدق % PageV01P397 31(@)(@@) % سرت إليه فأراني جاثمه % ظننتها يقظى وكانت نائمه % 32(@)(@@) % ثم أخذت نبلة كانت معي ، % ودرت دورين ولم أوسع % 33(@)(@@) % حتى تمكنت ، فلم أخط الطلب ، % لكل حتف سبب من السبب % 34(@)(@@) % وضجت الكلاب في المقاود ، % تطلبها وهي بجهد جاهد % 35(@)(@@) % وصحت بالأسود كالخطاف % ليس بأبيض ولا غطراف % 36(@)(@@) % ثم دعوت القوم : هذا بازي ! % فأيكم ينشط للبراز ؟ % 37(@)(@@) % فقال منهم رشأ : ' أنا ، أنا ! ' % ولو درى ما بيدي لأذعنا ! % 38(@)(@@) % فقلت : قابلني وراء النهر ، % أنت لشطر وأنا لشطر ! % 39(@)(@@) % طارت له دراجة فأرسلا % % أحسن فيها بازه وأجملا % % 40(@)(@@) % علقها فعطعطوا ، وصاحوا ، % و الصيد من آلته الصياح ! % PageV01P398 41(@)(@@) % فقلت : ما هذا الصياح والقلق ؟ % أكل هذا فرح بذا الطلق ؟ % 42(@)(@@) % فقال : إن الكلب يشوي البازا % % قد حرز الكلب ، فجز ، وجازا % % 43(@)(@@) % فلم يزل يزعق : يا مولائي ! % وهو كمثل النار في الحلفاء % 44(@)(@@) % طارت ، فأرسلت فكانت سلوى % % حلت بها قبل العلو البلوى % % 45(@)(@@) % فما رفعت الباز حتى طارا % % آخر عودا يحسن الفرارا % % 46(@)(@@) % أسود ، صياح ، كريم ، كرز ، % مطرز ، مكحل ، ملزز % 47(@)(@@) % عليه ألوان من الثياب % من حلل الديباج والعنابي % % 48(@)(@@) % فلم يزل يعلو وبازي يسفل % يحرز فضل السبق ليس يغفل % 49(@)(@@) % يرقبه من تحته بعينه ، % وإنما يرقبه لحينه % % 50(@)(@@) % حتى إذا قارب ، فيما يحسب ، % معقله ؛ والموت منه أقرب % PageV01P399 51(@)(@@) % أرخى له بنبجه رجليه ، % والموت قد سابقه إليه % 52(@)(@@) % صحت وصاح القوم بالتكبير ، % وغيرنا يضمر في الصدور % 53(@)(@@) % ثم تصايحنا فطارت واحده % شيطانة من الطيور مارده % 54(@)(@@) % من قرب فأرسلوا إليها % % ولم تزل أعينهم عليها % % 55(@)(@@) % فلم يعلق بازه وأدى % % من بعد ما قاربها وشدا % % 56(@)(@@) % صحت : أهذا الباز أم دجاجه ؟ % ليت جناحيه على دراجه % 57(@)(@@) % فاحمرت الأوجه والعيون % وقال : هذا موضع ملعون % 58(@)(@@) % إن لزها الباز أصابت نبجا % % أو سقطت لم تلق إلا مدرجا % % 59(@)(@@) % اعدل بنا للنبج الخفيف % والموضع المنفرد المكشوف % 60(@)(@@) % فقثلت : هذي حجة ضعيفة % وغرة ظاهرة معروفه % PageV01P400 61(@)(@@) % نحن جميعا في مكان واحد 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms79# ، % فلا تعلل بالكلام البارد ! % 62(@)(@@) % قص جناحيه يكن في الدار % مع الدباسي ، ومع القماري ! % 63(@)(@@) % واعمد إلى جلجله البديع ، % فاجعله في عنز من القطيع ! % 64(@)(@@) % حتى إذا أبصرته ، وقد خجل ، % قلت : أراه ، فارها ، على الحجل % 65(@)(@@) % دعه ، وهذا الباز فاطرد به % تفاديا من غمه وعتبه ! % 66(@)(@@) % وقلت للخيل ، التي حولينا : % تشاهدوا كلكم علينا ! % 67(@)(@@) % بأنه عارية مضمونه ، % يقيم فيها جاهه ودينه % 68(@)(@@) % جئت بباز حسن مبهرج % دون العقاب وفويق الزمج % 69(@)(@@) % زين لرائيه ، وفوق الزين ، % ينظر من نارين في غارين % 70(@)(@@) % كأن فوق صدره والهادي % % آثار مشي الذر في الرماد % PageV01P401 71(@)(@@) % ذي منسر فخم وعين غائره ، % وفخذ ملء اليمين وافره % 72(@)(@@) % ضخم ، قريب الدستبان جدا % % يلقى الذي يحمل منه كدا % % 73(@)(@@) % وراحة تغمر كفي سبطه % زاد على قدر البزاة بسطه % 74(@)(@@) % سر ، وقال : هات ! قلت : مهلا ! % احلف على الرد ! ' فقال : كلا ! % 75(@)(@@) % أما يميني ، فهي عندي غاليه % وكلمتي مثل يميني وافيه % % 76(@)(@@) % قلت : فخذه هبة بقبلة ! % فصد عني ، وعلته خجله % 79(@)(@@) % فلم أزل أمسحه حتى انبسط % وهش للصيد قليلا ، ونشط % 80(@)(@@) % صحت به : اركب ! فاستقل عن يد % مبادرا أسرع من قول : قد ! % 81(@)(@@) % وضم ساقيه وقال : قد حصل ! % قلت له : ' الغدرة من شر العمل ! ' % 82(@)(@@) % سرت ، وسار الغادر العيار % ليس لطير معنا مطار % PageV01P402 83(@)(@@) % ثم عدلنا نحونهر الوادي ، % والطير فيه عدد الجراد % 84(@)(@@) % أدرت شاهينين في مكان % لكثرة الصيد مع الإمكان % 85(@)(@@) % دارا علينا دورة وحلقا ، % كلاهما ، حتى إذا تعلقا % % 86(@)(@@) % توازيا ، واطردا اطرادا ، % كالفارسين التقيا أو كادا % % 87(@)(@@) % ثمت شدا فأصابا أربعا % % ثلاثة خضرا ، وطيرا أبقعا % % 88(@)(@@) % ثم ذبحناها ، وخلصناهما % % وأمكن الصيد فأرسلناهما % % 89(@)(@@) % فجدلا خمسا من الطيور ، % فزادني الرحمن في سروري % % 90(@)(@@) % أربعة منها أنيسيان % وطائرا يعرف بالبيضاني % % 91(@)(@@) % خيل نناجيهن كيف شينا % % طيعة ، ولجمها أيدينا % % 92(@)(@@) % وهي إذا ما استصعب القياده % صرفها الجوع على الإراده % PageV01P403 93(@)(@@) % % تساقطت ما بيننا من الفرق % 94(@)(@@) % حتى أخذنا ما أردنا منها % % ثم انصرفنا راغبين عنها % % 95(@)(@@) % إلى كراكي بقرب النهر % عشرا نراها ، أو فويق العشر % 96(@)(@@) % لما رآها الباز ، من بعد ، لصق % وحدد الطرف إليها وذرق % 97(@)(@@) % فقلت : قد صاد ، ورب الكعبه ، % % 98(@)(@@) % فدار حتى أمكنت ثم نزل % فحط منها أفرعا مثل الجمل % 99(@)(@@) % ما انحط إلا 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms80# وأنا إليه % ممكنا رجلي من رجليه % 100(@)(@@) % جلست كي أشبعه إذا هيه % قد سقطت من عن يمين الرابيه % 101(@)(@@) % فشلته أرغب في الزيادة ، % وتلك للطراد شر عادة % % 102(@)(@@) % لم أجزه بأحسن البلاء ، % أطعت حرصي ، وعصيت دائي % % PageV01P404 103(@)(@@) % فلم أزل أختلها وتختتل ، % وإنما نختلها إلى أجل % 104(@)(@@) % عمدت منها لكبير مفرد % يمشي بعنق كالرشاء المحصد % 105(@)(@@) % طار ، وما طار ليأتيه القدر ، % وهل لما قد حان سمع أو بصر ! ؟ % 106(@)(@@) % حتى إذا جدله كالعندل ، % أيقنت أن العظم غير الفصل % 107(@)(@@) % ذاك ، على ما نلت منه ، أمر % عثرت فيه وأقال الدهر ! % 108(@)(@@) % خير من النجاح للإنسان % % 109(@)(@@) % صحت إلى الطباخ : ماذا تنتظر ؟ % انزل عن المهر ، وهات ما حضر % 110(@)(@@) % جاء بأوساط ، وجرد تاج ، % من حجل الصيد ومن دراج % 111(@)(@@) % فما تنازلنا عن الخيول ، % يمنعنا الحرص عن النزول % 112(@)(@@) % وجيء بالكأس وبالشراب ، % فقلت : وفرها على أصحابي ! % PageV01P405 113(@)(@@) % أشبعني اليوم ورواني الفرح ، % فقد كفاني بعض وسط وقدح % 114(@)(@@) % ثم عدلنا نطلب الصحراء ، % نلتمس الوحوش والظباء % 115(@)(@@) % عن لنا سرب ببطن الوادي % % 116(@)(@@) % قد صدرت عن منهل روي ، % من غبر الوسمي والولي % 117(@)(@@) % ليس بمطروق ولا بكي ، % ومرتع مقتبل جني % 118(@)(@@) % رعين فيه ، غير مذعورات ، % % 119(@)(@@) % مر عليه غدق السحاب % بواكف ، متصل الرباب % 120(@)(@@) % مازال في خفض ، وحسن حال % حتى أصابته بنا الليالي % % 121(@)(@@) % سرب حماه الدهر ما حماه % لما رآنا ارتد ما أعطاه % 122(@)(@@) % بادرت بالصقار والفهاد % حتى سبقناه إلى الميعاد % PageV01P406 123(@)(@@) % فجدل الفهد الكبير الأقرنا ، % شد على مذبحه واستبطنا % % 124(@)(@@) % وجدل الآخر عنزا حائلا % رعت حمى الغورين حولا كاملا % % 125(@)(@@) % ثم رميناهن بالصقور % فجئنها بالقدر المقدور % 126(@)(@@) % أفردن منها في القراح واحدة % % قد ثقلت بالخصر وهي جاهده % 127(@)(@@) % مرت بنا ، والصقر في قذالها % % يؤذنها بسيء من حالها % % 128(@)(@@) % ثم ثناها وأتاها الكلب % هما ، عليها ، والزمان إلب % 129(@)(@@) % فلم نزل نصيدها ونصرع % حتى تبقى في القطيع أربع % 130(@)(@@) % ثم عدلنا عدلة إلى الجبل % إلى الأراوي ، والكباش والحجل % 131(@)(@@) % فلم نزل بالخيل والكلاب % نحوزها حوزا ، إلى الغياب % 132(@)(@@) % ثم انصرفنا ، والبغال موقره ، % في ليلة ، مثل الصباح ، مسفره % PageV01P407 133(@)(@@) % حتى أتينا رحلنا بليل ، % وقد سبقنا بجياد الخيل % 134(@)(@@) % % حتى عددنا مئة وزيدا % % 135(@)(@@) % فلم نزل نقلي ، ونشوي ، ونصب ، % حتى طلبنا صاحيا فلم نصب 
urn:cts:arabLit:0357AbuFirasHamdani.Diwan.JK007584-ara1:ms81# % 136(@)(@@) % شربا ، كما عن ، من الزقاق % بغير ترتيب ، وغير ساق % 137(@)(@@) % فلم نزل سبع ليال عددا % % أسعد من راح ، وأحظى من غدا % % PageV01P408