urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms201# % % 6(@)(@@) % وإذا ود وددنا مثله % % وهو أمر جل عن أن يوصفا % % 7(@)(@@) % إن للإخوان في الحكم يدا % % تقتضي منه عهودا ووفا % % 8(@)(@@) % وهو أيضا نسب متصل % % وحدة الروح مقام الخلفا % % 9(@)(@@) % وإذا الصحبة في الظاهر قد % % عظمت فضلا وزادت شرفا % % 10(@)(@@) % نسبة الإخوان في الباطن لا % % تقتضي إلا الجوى والشغفا % % PageV01P1038 11(@)(@@) % شرطوا الرؤية بالعين فمن % % نالها منه فبا لجسم اكتفى % % 12(@)(@@) % وشرطنا الذات للذات ترى % % رؤية التحقيق من غير خفا % % 13(@)(@@) % فاعرفوا بالفرق ما بينهما % % فاز بالإحسان من قد عرفا % % 16(@)(@@) % غاب موج الرسومص في بحار العلومص وانطماس النجوم % % 17(@)(@@) % بالفنا والهلاك % % شمس ذات الحباك % % 18(@)(@@) % دور % % 19(@)(@@) % يا ضياء العيونص فيك عقلي جنونص وحياتي منون % % 20(@)(@@) % ما لقلبي فكاك % % من حبال الشباك % % 21(@)(@@) % دور % % 22(@)(@@) % قم ناب يا نديمص إن خمري قديمص كاسه نستديم % % PageV01P1039 23(@)(@@) % لطف عيشي بذاك % % ومناي هناك % % 24(@)(@@) % دور % % 25(@)(@@) % وبروق الوصالص لامعات النصالص نورها الحق صال % % 26(@)(@@) % في ليالي العراك % % محو كل الصكاك % % 27(@)(@@) % دور % % 28(@)(@@) % صل يا ربناص ثم سلم لناص لنبي دنا % % PageV01P1040 البحر : - 1(@)(@@) % يا البط الكيمياء علمي % % أكسيرك الخالص المصفى % % 2(@)(@@) % ذب والق منه عليك جزءا % % يصبغ في الحال منك ألفا % % 3(@)(@@) % يحيل فزد يرك انقلابا % % بذهب عنك ليس يخفى % % 4(@)(@@) % والعين فالغين تلك لكن % % تركت وصفا ونلت وصفا % % 29(@)(@@) % من إله السماك % % في الليالي الحلاك % % 30(@)(@@) % دور % % 31(@)(@@) % فيه عبد الغنيص نال قدرا سنيص كلما بعتني % % 32(@)(@@) % بالنظام المحاك % % في حلى الاحتباك % % PageV01P1041 البحر : - 1(@)(@@) % انظر الكل لطيفا % % لا ترى شيئا كثيفا % % PageV01P1042 البحر : - 1(@)(@@) % كل الكلام الذي يبدو وكل سنا % % 2(@)(@@) % إنما الكل معاني % % فخبيثا وشريفا % % 2(@)(@@) % يفنى سريعا وفقر هكذا وغنى % % 3(@)(@@) % صبغة الله الذي قد % % شرع الدين حنيفا % % 3(@)(@@) % فاحفظ مقالي وخل عنك فرط عنا % % 4(@)(@@) % الملك لله من يظفر بنبيل منى % % يرد قسرا ويضمن دونه الدركا % % 4(@)(@@) % لا ترى من دونه في % % خلقه شيئا مخيفا % % 5(@)(@@) % إني رضيت فلم أحفل بمسئلة % % 5(@)(@@) % واكشف الستر مقاما % % في ذرى القرب منيفا % % 6(@)(@@) % وعن الأكوان طرا % % كن بمولاك عفيفا % % PageV01P1043 6(@)(@@) % أمر المهيمن يجريه بمعدلة % % 7(@)(@@) % هو حق وسواه % % باطل جاء لفيفا % % 7(@)(@@) % حتى قنعت برزق منه لي صلة % % 8(@)(@@) % ووجود مطلق عن % % قيده شف شفيفا % % 8(@)(@@) % لو انك لي أو لغيري قدر أنملة % % من البسيطة كان الأمر 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms202# مشتركا % % 9(@)(@@) % جعل الكامل منا % % عنه في الأرض خليفا % % PageV01P1044 البحر : - 1(@)(@@) % يا جمال من أهوى يا غيب % % أثنى ذا الحجاب صل عبدك % % 2(@)(@@) % متعني بما أروى لا عيب % % صلنيإن تشأ أكن عبدك % % 3(@)(@@) % نور الوجه لي ظاهر % % وهو للورى باهر % % 4(@)(@@) % قلبهم له مأوى لا ريب % % يهنى عنه لا تخف بعدك % % 5(@)(@@) % دور % % 6(@)(@@) % تحت ذا القناع محبوبياليت % % حبيلو يكون لي يظهر % % 7(@)(@@) % إنني أنا المحسوبكالميت % % لبى حنسه البهي أبهر % % 8(@)(@@) % واحد ماله ثاني % % واحد له الفاني % % 9(@)(@@) % لا ترى سواه مطلوبوالبيت % % قلبيطف به تنل سعدك % % 10(@)(@@) % كل شيء في يديه % % كله صار الوريفا % % PageV01P1045 10(@)(@@) % دور % % 11(@)(@@) % لم يزل منه قويا % % ومن النفس ضعيفا % % 11(@)(@@) % قم بنا إلى الندمانفي الحان % % يا صاحندرك الصفا بالراح % % 12(@)(@@) % واستمع من العيدانألحان % % أقداحلي أتت بها الأفراح % % 12(@)(@@) % فإذا أمحل قطر % % حله أصبح ريفا % % 13(@)(@@) % طاب لي بها كاسي % % لأن قلبها القاسي % % 13(@)(@@) % حيث كاس الحق تجلى % % وشراب الغير عيفا % % 14(@)(@@) % منيتي في مستواها % % تبعث الروح هفيفا % % 14(@)(@@) % والعذول في حرمانأفنان % % أفراحمنه فاحترز جهدك % % 15(@)(@@) % ولأقلام التجلي % % سمعت أذني صريفا % % PageV01P1046 16(@)(@@) % هي ذات الخال فيها % % لم تجد إلا لهيفا % % 17(@)(@@) % انزلت قولا ثقيلا % % جعل الكون خفيفا % % 18(@)(@@) % جذبتني بالمجالي % % نحوها جذبا عنيفا % % 19(@)(@@) % وأقامتني أماما % % بين قومي وعريفا % % 20(@)(@@) % وبها صرت بصيرا % % بعد ما كنت كفيفا % % 21(@)(@@) % وبأنواع كمال % % منحت عقلي السخيفا % % 22(@)(@@) % فأنا اليوم بها في % % أهلها قمت وصيفا % % PageV01P1047 البحر : - 1(@)(@@) % كنت بالأمس عند نفسي كثيفا % % وأنا الآن صرت شيئا لطيفا % % 2(@)(@@) % خف جسمي وخفت الروح مني % % فوجدت الصخر الثقيل خفيفا % % 3(@)(@@) % وبدت هكذا العوالم عندي % % كلها تالدا لها وطريفا % % 4(@)(@@) % فاعجبوا يا عقول من وصف أمري % % لطفتني معارفي تلطيفا % % 5(@)(@@) % ولقد صرت واحد وكثيرا % % ولقد جئت بالجميع لفيفا % % 6(@)(@@) % صبغة الله وهي خلق وأمر % % ألقت فرقة الورى تأليفا % % 7(@)(@@) % كالمعاني تلوح في كلمات % % لعقول نوت لها تعريفا % % 8(@)(@@) % والذي قام بالجميع بعيد % % وقريب لا يقبل التكييفا % % 9(@)(@@) % جل وجه رأيته فمحاني % % نوره الحق إذ إليه أضيفا % % 10(@)(@@) % رتب في وجوده نحن عنه % % قد ظهرنا به له توصيفا % % PageV01P1048 11(@)(@@) % معه مالنا وجود لأنا % % قد وجدنا به إذا لجهل عيفا % % 12(@)(@@) % وهي ذكرى ائمة الحق يجرو % % ن قويا في شأوها وضعيفا % % 15(@)(@@) % دور % % 16(@)(@@) % طلعة المليح الزينيختال 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms203# % % إنيمطلع لذاك النور % % 17(@)(@@) % من به قرير العينبالحال % % يغنى حاله عن الطنبور % % 18(@)(@@) % قد رفعت أستاري % % واجتليت أنواري % % 19(@)(@@) % أين من يراني أينقد زال % % عنييا رشا الحمى صدك % % 20(@)(@@) % دور % % 21(@)(@@) % حولوا حجاب الغيرعن عين % % ذاتيواكشفوا عن الأستار % % 22(@)(@@) % أخوتي وجدوا السيرلابين % % يأتيفي مشعشع الأنوار % % PageV01P1049 23(@)(@@) % فالحبيب قد وافى % % والبغيض قد صافي % % 24(@)(@@) % والذي يريد الخيربالمين % % عاتيقصده نفى قصدك % % 25(@)(@@) % دور % % 26(@)(@@) % كلهم هم الأفعاللا ذات % % عنديغير عين تلك الذات % % PageV01P1050 البحر : - 1(@)(@@) % صفا ماء الحقيقة فهو صافي % % من الكدر الذي هو فيه خافي % % 2(@)(@@) % وما الكدر الذي هو فيه إلا % % تقادير له منه توافى % % 3(@)(@@) % تسمت بالحوادث وهي فيه % % قديمات وما هي بالمنافي % % 4(@)(@@) % سراب ظنه الظمئان ماء % % فلما جاءه للارتشاف % % 5(@)(@@) % هنالك لم يجد شيئا ولكن % % به وجد الإله الحق كافي % % 6(@)(@@) % نظرت به شهدت وإن بنفس % % نظرت عميت ياذا الانحراف % % 7(@)(@@) % شخوص شاءها فيقال أشيا % % بلا شك هناك ولا اختلاف % % 8(@)(@@) % ومشيآته ليست بوصف % % له وبه فما هي ذو اتصاف % % 9(@)(@@) % ولا ذا وصف ذا كلا ولا ذا % % لذا وصف لفقدان التكافي % % 27(@)(@@) % فاعرضوا عن الجهالأموات % % تبدى وهم ما به تقتات % % PageV01P1051 28(@)(@@) % وافهموا لأقوالي % % واسلكوا بأحوالي % % 29(@)(@@) % والعليم يدري الحالما فات % % قصديأن يهيج بي وجدك % % 30(@)(@@) % دور % % 31(@)(@@) % والصلاة والسلامنوران % % منيدائما على الهادي % % 32(@)(@@) % من حياه بالإكرامرحمان % % فنيمدحه بإنشادي % % 33(@)(@@) % عبد للغني شامي % % قدره به سامي % % 34(@)(@@) % كاسه من التسنيمملآن % % يدنيمنك يا أخي رشدك % % PageV01P1052 البحر : - 1(@)(@@) % ليس طيب الحياة غير وفاتك % % والسوى فاتن النفوس وفاتك % % 2(@)(@@) % يا محبا أحب ثوب حبيب % % أعط نفس الحبيب بعض التفاتك % % 3(@)(@@) % وتحقق بمن تحب تجده % % أنت والجهل للأحبة هاتك % % 4(@)(@@) % صور عن مصور كثياب % % لبستها عليك نفس فتاتك % % 5(@)(@@) % وحياتي بمقتضى حكم أمري % % وهو قولي لمنيتي وحياتك % % 6(@)(@@) % ليس لي غير وجهك الحق عنه % % لي ثبوت بمقتضى إثباتك % % 10(@)(@@) % هو الحق الوجود وكل شيء % % به عدم ترتب بانعطاف % % 11(@)(@@) % فقم وانهض إلى التحقيق فيه % % تلافى الحال من قبل التلاف % % 12(@)(@@) % ومع أهل الوفاق أدم وفاقا % % إلي كم أنت مع أهل الخلاف % % 13(@)(@@) % وكن بالله أنت تكن قويا % % وجانب غفلة القوم الضعاف % % PageV01P1053 14(@)(@@) % وإلا سوف تندم يا نديمي % % لفوت الحظ في زمن الثقاف % % PageV01P1054 البحر : - 1(@)(@@) % الناس حاروا في الضمير وحجبه % % من يرفع 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms204# الأستار عنه يكشف % % 2(@)(@@) % العين للعين اتحادا صادقا % % قل لي وما هو منه لا يتكيف % % 3(@)(@@) % فأجابه % % 4(@)(@@) % لا حيرة في الحق عند ذوي الهدى % % بل عندهم منه الهداية تعرف % % 5(@)(@@) % قوم أزال حجابه عن قلبهم % % وبهم يسمى بل بهم هو يوصف % % 6(@)(@@) % لازال فيهم نور ظلمة كونهم % % أين الظلام وشمسه لا تكسف % % 7(@)(@@) % خذ نديمي أطوار نفسك ممن % % طاب فيه الشراب من كاساتك % % 7(@)(@@) % والعين تلك العين واحدة كما % % كانت قديما عند من هو منصف % % 8(@)(@@) % وأدرها عليك منك وعربد % % مع ذاك الحبيب في خلواتك % % 8(@)(@@) % والناس حاروا بالعقول لأنهم % % راموا التكيف وهو ليس يكيف % % PageV01P1055 9(@)(@@) % فلو احتملوا بحماه عن أفكارهم % % وبه اهتدوا إلا بالعقول لا تحفوا % % 9(@)(@@) % خمرنا في الدنان منه بواقي % % خذه واشرب واخشع به في صلاتك % % 10(@)(@@) % لكن إذا رام المهيمن رتبة % % للمرء قام بها فمن ذا يحرف % % 10(@)(@@) % وهو خمر معنى القديم تصفى % % قبل يا كرم كنت في شجراتك % % 11(@)(@@) % واسقنا ربنا شرابا طهورا % % مثل ما جاء عنك في آياتك % % 11(@)(@@) % فهو لمكيفا بالأوامر للحجى % % وبحضرة القيوم ذاك مكيف % % 12(@)(@@) % واطرح يا أخا الطريقة واترك % % كل شيء إن رمت نيل نجاتك % % 13(@)(@@) % واسمع النفخ منك في صور جسم % % لك فالناي طاب من نغماتك % % 14(@)(@@) % هذه نشأة بها أنت باد % % لك عندي هاتيك من نشآتك % % 15(@)(@@) % يا رعي الله بالإجارع قوما % % هم لدينا يا دهر من حسناتك % % PageV01P1056 16(@)(@@) % حفظوا العهد من ألست فوافوا % % لمن الملك وهو للكل باتك % % 17(@)(@@) % لم تملهم عن نوره ظلمات % % يا سوى بارتكابهم شهواتك % % PageV01P1057 البحر : - 1(@)(@@) % بهجة النور بعد وقت الكسوف % % فتعجب لواصف موصوف % % 2(@)(@@) % حرفوه فنصححوه جهارا % % وهو صف في عين كل الصفوف % % 3(@)(@@) % فقده وجده بعزة ذات % % طبعه خارج عن المألوف % % 4(@)(@@) % حرف لفظ وحرف رقم وحفظ % % وحروف تالفت بحروف % % 5(@)(@@) % كل من باعه به يشتريه % % واحد وهو ألف ألف ألوف % % 18(@)(@@) % أخذتهم لها المليحة منهم % % حيننادوا أنا ظهور صفاتك % % 19(@)(@@) % فمحتهم بها وقد أثبتتهم % % عندها في حمى العيون الفواتك % % 20(@)(@@) % هذه زينب التي كشفت عن % % وجهها يا محب في سكراتك % % 21(@)(@@) % وهو عند الجهول خلف قناع % % هو ياذا الجهول أنت بذاتك % % 22(@)(@@) % فانخلع عنك في الوجود إليها % % سائحا منك في 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms205# فضا فلواتك % % PageV01P1058 البحر : - 1(@)(@@) % أنا بالله عارف % % ومن البحر غارف % % 2(@)(@@) % بحر علم مقدس % % منه تبدو المعارف % % 3(@)(@@) % سفن كلنا به % % طاف فيهن طائف % % 4(@)(@@) % يا أمانا لكل من % % منه قد خاف خائف % % 5(@)(@@) % كن أمانا لجملتي % % حيث تبدو المخاوف % % 6(@)(@@) % وتلطف ودلني % % بك إني المؤالف % % 7(@)(@@) % لا تكلني إلى السوى % % فالسوى أنت كاشف % % 8(@)(@@) % كل من كان معرضا % % عنك فهو المخالف % % 9(@)(@@) % أنت لا نحن كلنا % % نحن ما أنت قاذف % % 10(@)(@@) % يقذف الله قلت % % بالحق وهي اللطائف % % PageV01P1059 11(@)(@@) % يا أخلاي وافقوا % % أمركم لا تخالفوا % % 12(@)(@@) % واحذروا أن تغركمكم نفوس تحيرت ودهتها الكثائف % بفلاها التنائفسقط بيت ص % % 13(@)(@@) % وإلى الحق ما اهتدتماء حق صفا ولا شيء فيه يخالف % وبها العقل واقفسقط بيت ص % % 14(@)(@@) % كدر كلنا به % % فليزلنا المكاشف % % 23(@)(@@) % ثم مت بها راكعا لا تبالي % % وعن الغير فافن في سجداتك % % 24(@)(@@) % سعدت أمة إلى الغيب حجت % % ثم طافت يا كعبتي بجهاتك % % 25(@)(@@) % وأتت زمزم العلوم فنالت % % شربة العز من كفوف سقاتك % % 26(@)(@@) % وبذكر الحبيب لبت وعما % % دونه أحرمت لدى ميقاتك % % 27(@)(@@) % ومناها فازت به في مناها % % بعد ما قد أتت إلى عرفاتك % % 28(@)(@@) % إن هذا هو النعيم فطوبى % % للذي يا مقام في جناتك % % PageV01P1060 29(@)(@@) % منك فيه يسيل كوثر روح % % فتراه السكران من رشفاتك % % 30(@)(@@) % يا رياض الجنان من حان قربى % % عطرينا بالطيب من نفحاتك % % 31(@)(@@) % وانشري ما انطوى من الذكر عنا % % وامنحينا اللذيذ من ثمراتك % % 32(@)(@@) % إننا عنك ظاهرون بلطف % % منك في أرضك اقتضا نياتك % % 33(@)(@@) % لم تجد كثرة الوسائط جسما % % تمنع الروح ربنا من هباتك % % 34(@)(@@) % فالذي منك قد وفى فتدلى % % لم ينقصه كونه ابن العواتك % % 35(@)(@@) % هو أمر لنا قريب بعيد % % فارجعي يا حروف في ألفاتك % % PageV01P1061 البحر : - 1(@)(@@) % طلعت شمسنا على الأفلاك % % فانمحت ظلمة النفوس الحلاك % % 2(@)(@@) % وسرت نسمة الحمى فأهاجت % % شوق صب ما إن له من حراك % % 3(@)(@@) % هذه طلعة الحبيب بقلبي % % فتنة العابدين والنساك % % 15(@)(@@) % بالصفا والوفا ولا % % عنه بصرفه صارف % % 16(@)(@@) % إنما الحق غيبنا % % حارفي الوصف واصف % % PageV01P1062 البحر : - 1(@)(@@) % دخل إلى بيت قلبي بارقه رفرف % % فلم يدع فيه لا سقفا ولا رفرف % % 2(@)(@@) % لطائر الغيب لما فوقنا رفرف % % جعل لكتب الهدى في حيطنا رفرف % % 4(@)(@@) % هيكل تسرح النواظر منه 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms206# % % في جمال فرد بغير اشتراك % % 5(@)(@@) % وبذات الغضا خيام عريب % % نصبت بين عسجد فأراك % % PageV01P1063 البحر : - 1(@)(@@) % هل تعرفون العدم الصرفا % % فتدركوا من لظفه حرفا % % 2(@)(@@) % لا تحسبوا معناه مفهومكم % % معناه شيء عنكمو يخفى % % 3(@)(@@) % فكيف تدرون الوجود الذي % % من عدم صرف هو إلا خفى % % 4(@)(@@) % وهو الذي نعنيه في وحدة ال % % وجود لما نذكر الوصفا % % 5(@)(@@) % إن الوجود الصرف اطلاقه % % كالعدم الصرف لمن وفى % % 6(@)(@@) % كلاهما من حيث نفساهما % % تساويا فانعطفا عطفا % % 6(@)(@@) % كلما أومضت بروق رباهم % % هطل القطر من عيون البواكي % % 7(@)(@@) % تقابلا اجتمعاو عندنا % % في عدم الإدراك إذ ينفى % % 7(@)(@@) % حلية للمحب في نار شوق % % صنعة الانسكاب والانسباك % % 8(@)(@@) % هتك الستر نوره فافتضحنا % % من لقلبي بنوره الهتاك % % PageV01P1064 9(@)(@@) % واحد وهو في العقول كثير % % ليس يحكيه في البرية حاكي % % 10(@)(@@) % كل من قال مثله قد رأينا % % إنه قول كاذب أفاك % % 11(@)(@@) % مد أكوانه حبال خيال % % لاصطياد القلوب بالإشراك % % 12(@)(@@) % فأتته الموحدون وجاءت % % بارتباطيها أولوا الإشراك % % PageV01P1065 البحر : - 1(@)(@@) % إن القناعة في الدنيا هي الشرف % % وغيرها عندنا التبذير والسرف % % 2(@)(@@) % وهي التدبر في القرآن تقرأه % % وفي حديث رسول الله تعترف % % 3(@)(@@) % واجعل معاشك من خبز الشعير ومن % % ماء وإن لم يكن عذبا فتغترف % % 4(@)(@@) % وخرقة الصوف طول العمر تلبسها % % مع صاحب أو صحاب أنت تأتلف % % 13(@)(@@) % دم على حبه ومل عن سواه % % وإذا لم تبك فكن متباكي % % 14(@)(@@) % حضرة العز من أتاها بذل % % كان منها بالقرب فوق السماك % % 15(@)(@@) % أناشاك لطولها من قصوري % % عن مدى الشكر شاكر أنا شاكي % % PageV01P1066 البحر : - 1(@)(@@) % صدق الكتاب لمن به يتمسك % % والبعض منه به يكون المشرك % % 2(@)(@@) % وهو المبين على الذي بجميعه % % يدري وليس ببعضه يتمسك % % 3(@)(@@) % هو نازل من حضرة أحدية % % فتحققوا فيه ولا تتشككوا % % 4(@)(@@) % سور وآيات بدت فتركبت % % من أحرف هي بالتوحيد أملك % % 5(@)(@@) % مشتقة من سور كل مدينة % % لإحاطة فيها بما يتفكك % % 5(@)(@@) % وهذه هذه تلك السعادة في % % دنياك فاقنع بها بالعز تتصف % % 6(@)(@@) % ولقد بدت صورا إذا هي فخمت % % بنزولها الثاني لدى من يسلك % % 6(@)(@@) % وبالفخار على كل الملوك أولى ال % % تيجان ممن مضى في معشر سلفوا % % 7(@)(@@) % بالحق أنزلناه ذلك أول % % كل به قد آمنوا واستبركوا % % 7(@)(@@) % كمثل كسرى انوشروان من ملكت 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms207# % % يمينه الفرس يرعاها فتنتصف % % PageV01P1067 8(@)(@@) % وبه لقد نزل اغتدى هو ثانيا % % فتفرقوا فيه وعنه تمحكوا % % 8(@)(@@) % وقيصر الروم والقوم الذين حووا % % شرقا وغربا من الأرض التي عرفوا % % 9(@)(@@) % وبعد ذلك فاشكر من حباك بها % % ربا كريما فتكفى عنده الكلف % % 10(@)(@@) % ولا تعرج على مال يكون ولا % % جاه وكن رجلا ما عنده أسف % % 11(@)(@@) % فالكل فان وكل الناس عن كتب % % هم التراب وأقوام هم الجيف % % PageV01P1068 البحر : - 1(@)(@@) % العين واحدة والحكم مختلف % % فمنه مفترق بل منه مؤتلف % % 2(@)(@@) % هي الحوادث لا عين لها أبدا % % قديمها درها والحادث الصدف % % 3(@)(@@) % إياك تفهم من قولي الحلول بها % % لأن قولي رموز صاغها السلف % % 4(@)(@@) % وأنت تجهل علما نحن نورده % % من بحر حق عليه الناس ما وقفوا % % 5(@)(@@) % فقف علينا وسلم بالأمور لنا % % فإن عارفنا بالغيب معترف % % 6(@)(@@) % الله كبرأ لا شيء يشابهه % % وكل حروف عن الإدراك منحرف % % 7(@)(@@) % ظهورنا عنه بالتقدير من عدم % % هو الظهور له في كل ما نصف % % 8(@)(@@) % لأنه الغيب غيب الغيب من يره % % يرى الحوادث تبدو عنه لا تقف % % 9(@)(@@) % وبدا لهم صور فخصوا بعضه % % بالترك منه وبعضه لم يتركوا % % 10(@)(@@) % وبقى عليهم حكم موطنهم بما % % هو مقتضاه لهم بجهل يملك % % PageV01P1069 11(@)(@@) % ولذلك الدنيا غدت ملعونة % % إلا الذي استثني وهاج المعرك % % 12(@)(@@) % وأتاك من آياته ألوانكم % % والألسن اللاتي غدت تتحرك % % 13(@)(@@) % وجميعها صور وتلك كثيرة % % وبها اختلاف زائد لا يدرك % % 14(@)(@@) % والله مولانا محيط قد أتى % % لك من وراء الكل وجه يهتك % % 15(@)(@@) % بل ذاك قرآن مجيد جاء في % % لوح هو المحفوظ عمن يشرك % % PageV01P1070 البحر : - 1(@)(@@) % ظهرت لقلبي بما قد نوى % % 2(@)(@@) % وبالحول أمددتني والقوى % % 3(@)(@@) % فيا من به في زاد الجوى % % 4(@)(@@) % أحبك حبين حب الهوى % % وحبا لأنك أهل لذاكا % % 5(@)(@@) % حبيبي هو االداء لي والدوا % % 6(@)(@@) % وذاك العليم بما قد روى % % 7(@)(@@) % أقول له وعلي احتوى % % 8(@)(@@) % فأما الذي هو حب الهوى % % فشيء شغلت به عن سواكا % % 9(@)(@@) % ألا عل من شاقني عله % % 9(@)(@@) % كأنها البرق وهي الأمر لاح بما % % يريده الله وهو الخلق منقذف % % PageV01P1071 10(@)(@@) % يداوي فؤادي بما عله % % 10(@)(@@) % وأمره القدر المقدور آخره % % ياء الحروف بدت والأول الألف % % 11(@)(@@) % على عشقك القلب من عله % % 11(@)(@@) % فانظره أنت ودع ما أنت ناظره 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms208# % % فإنه فعله والفعل منحذف % % 12(@)(@@) % وكن له مظهرا لا عنه محتجبا % % فإن شمس الضحى بالبدر تنكسف % % 12(@)(@@) % وأما الذي أنت أهل له % % فكشفك للحجب حتى أراكا % % 13(@)(@@) % فؤادي بفرط الجوى ممتلى % % 13(@)(@@) % بكل شيء محيط قال خالقنا % % فافهم فبالفهم سر الغيب ينكشف % % 14(@)(@@) % جل الإله وقد عزت مظاهره % % يراه قلب عن الأغيار مختلف % % 15(@)(@@) % فتضمحل رسوم الكائنات ولا % % عقل هناك ولا حس فيغترف % % PageV01P1072 16(@)(@@) % ولا يراه سواه دائما أبدا % % والكل فان كما قد قال يا نطف % % 17(@)(@@) % من كان من نطف الأقذار أولهم % % ماذا يرون هنا والآخر الجيف % % 18(@)(@@) % الله ألله رب العالمين فمن % % به رأه رأى الأكوان تنعطف % % 19(@)(@@) % وزال عنه ضلال في بصيرته % % وما بقي عنده حزن ولا أسف % % 20(@)(@@) % هذا هو الرجل المرفوع جانبه % % عند الإله وفي الدنيا له الشرف % % PageV01P1073 البحر : - 1(@)(@@) % أعط طرفا له وللكون طرفا % % تلق في الكون اقحوانا وطرفا % % 2(@)(@@) % لك عينان وعين غيب تراه % % وتراه الأخرى فتصرف صرفا % % 3(@)(@@) % أنا عبد الغني لمعة برق % % يعدها لمحة تلوح وتخفى % % 4(@)(@@) % هكذا دائما لأني روح % % تفخ أمر من الإله مصفى % % 14(@)(@@) % وعيني ترى للجمال العلى % % 15(@)(@@) % وحالان عندي هما اجتلى % % 16(@)(@@) % فلا حمد في ذا ولا ذاك لي % % ولكن لك الحمد في ذا وذاكا % % PageV01P1074 البحر : - 1(@)(@@) % أصبحت أنا على مرادك % % في عافية وفي عبادك % % 2(@)(@@) % مكفي مؤونة مهني % % من رزقك قانعا بزادك % % 3(@)(@@) % فالشكر لك الكثير مني % % لازال على صفا ودادك % % 4(@)(@@) % يا مالك جملتي جميعا % % إني لأسير في قيادك % % 5(@)(@@) % أحسنت إلي في ابتداء % % بالحكم بمقتضى رشادك % % 5(@)(@@) % ظاهر في كثيف جسم تجلى % % فيه روح وهو اللطيف الموفى % % 6(@)(@@) % واجعل حسنا تمام أمري % % والقرب فعده من بعادك % % 6(@)(@@) % كل شيء مثلي كثيف لطيف % % وإذا ما عرفت زادك لطفا % % 7(@)(@@) % في الباطن كن لنا حفيظا % % والظاهر من يد استنادك % % 7(@)(@@) % فاترك الكل عنك وانظر إليه % % بالوجود الحق الذي فيك يلفى % % PageV01P1075 8(@)(@@) % واعطف كرما وكن معينا % % في خلقك لي وفي بلادك % % 8(@)(@@) % تعرف الكل يا لوجود جهارا % % فهو أعلى منهم وأجلى وأكفى % % 9(@)(@@) % يا ابن ودي هي الحقيقة أمر % % واحد صار ذلك الأمر ألفا % % 10(@)(@@) % بظهور في كل شيء مراد % % للإله الذي تحققت كشفا % % 11(@)(@@) % ظاهرا ذاك لا يزال 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms209# ولكن % % شمسه قد كسفتها عنك كسفا % % PageV01P1076 البحر : - 1(@)(@@) % أنا الوجود الذي ذاتي وأوصافي % % خلقتها لي بتقد يرى وانصافي % % 2(@)(@@) % بل قد خلقت جميع الخلق يا صافي % % مع أنني عبد فاني عند وصافي % % 9(@)(@@) % إني أبدا لك التجائي % % ملقى أملي على جهادك % % 10(@)(@@) % لا أبرح عن مقام ذلي % % في نيل مناي بافتقادك % % PageV01P1077 البحر : - 1(@)(@@) % الروح كالريح إن جازت شذا النطف % % تزكو وتخبث إن مرت على الجيف % % 2(@)(@@) % وليس تحكم في جسم تكون له % % الأعلى مقتضى ما فيه فاعترف % % 11(@)(@@) % فادرك رمقي بشرح صدري % % واروي عطشي إلى عهادك % % PageV01P1078 البحر : - 1(@)(@@) % ومستورة عنا بها أوجبت هتكي % % 2(@)(@@) % بطلعة وجه نوره مشهر الفتك % % 3(@)(@@) % فقلت ورياها لنا فاح كالمسك % % 3(@)(@@) % وإنما هي من أمر الإله أتت % % في خسة هي من جسم وفي شرف % % 4(@)(@@) % أيا ربه الخدر التي أفسدت نسكي % % على كل حال أنت لا بد لي منك % % 4(@)(@@) % فتارة في شقاء منه قدره % % ربي وطورا بسعد غير منصرف % % 5(@)(@@) % فالجأ إلى الله إن رمت النجاة بها % % واسلك سبيل أولى التقوى ولا تقف % % PageV01P1079 البحر : - 1(@)(@@) % صحن صحناء واسع الأطراف % % وهو صحن لذي التقى والعفاف % % 2(@)(@@) % حضرة للذي تولى عليها % % وهي أبهى منازل الأشراف % % 3(@)(@@) % من دعانا لها يجل مقاما % % فاضل الذات كامل الأوصاف % % 4(@)(@@) % مشرفات جهاتها بسناها % % خالص الود صادق الحب صافي % % 5(@)(@@) % صدره واسع لمن جاء يسعى % % لحماه من سائر الأضياف % % 5(@)(@@) % نويت الفنا فيها وللمرء ما نوى % % 6(@)(@@) % فناديتها رفقا إلى كم أرى نوى % % 7(@)(@@) % ولابد من وصل به يسكن الجوى % % 8(@)(@@) % فإما بذل وهو أليق بالهوى % % وأما بعز وهو أليق بالملك % % PageV01P1080 البحر : - 1(@)(@@) % يا قلب لا تشتغل إلا بمن حبك % % وثوب جسمك بأيدي قدرته حبك % % 2(@)(@@) % خيلان وجه جعل صور الصور حبك % % فالق نواك كما قد قال عن حبك % % 6(@)(@@) % لا يزال الكمال يقطر منه % % نوره في سمائه غير خاف % % 7(@)(@@) % وهو شهم مهذب يتسامى % % كل وقت عن كل شيء منافي % % PageV01P1081 البحر : - 1(@)(@@) % مت في هوى حي بحسب حيه حيك % % وانزل بحيه فإنه قد نزل حيك % % 2(@)(@@) % هذا الذي بظهوره قد قتل حيك % % وثوب حالك على نول الهدى حيك % % 8(@)(@@) % وله من عناية الله باع % % طال فوق الرؤوس والأكتاف % % PageV01P1082 البحر : - 1(@)(@@) % يا 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms210# شرفي يا شرفي يا شرفي % % وجه من أهواه وقد أشرق في % % PageV01P1083 البحر : - 1(@)(@@) % أيها الطالب النجاة أتاكا % % قول حق فخل عنك الهلاكا % % 2(@)(@@) % قلبي المضنى به طلعته % % فتنتنى بالبها والهيف % % 2(@)(@@) % إنني كاشف لك السر فاسمع % % سر رب قد اختفى عن حجاكا % % 3(@)(@@) % غصن بان ينثني مرحا % % قد رماني في بحار التلف % % 3(@)(@@) % خلق الله أولا عالم الرو % % ح وما كان من مكان هناكا % % 4(@)(@@) % لو رآه البدر ما بان ولو % % سمع الظبي به لم يقف % % 4(@)(@@) % لا ولاكان من زمان فحقق % % ما أشرنا له بلغت مناكا % % 5(@)(@@) % ينجلي في كل شيء عندنا % % فنراه في القبا المنكشف % % 5(@)(@@) % ثم من بعده المقادير جاءته % % بي وكان مع الزمان ابتداكا % % 6(@)(@@) % لبس الصورة يختال بها % % بيننا حاوي البها والترف % % PageV01P1084 6(@)(@@) % وابتداء المقدار عرش محيط % % هو جسم ولا يطيق حراكا % % 7(@)(@@) % قد تسمى لي بأسماء الورى % % وبكل اسم لهم مختلف % % 7(@)(@@) % ثم فيه من روحه كان نفخ % % من إله في غيبه لا يحاكى % % 8(@)(@@) % فاقتضى إذا تحركاوسكونا % % فأدار النجوم والأفلاكا % % 8(@)(@@) % عطفه الغصن وقلبي طائر % % همزة ساكنة في الألف % % 9(@)(@@) % هو حق وسواه باطل % % مثل ما قال لنا في الصحف % % 9(@)(@@) % ثم إن النجوم حرك فيها % % ذلك النفخ عندها الإدراكا % % 10(@)(@@) % فاشهد اشهد أن تكن ذا بصر % % وإذا لم تكن كن في الطرف % % 10(@)(@@) % فنسمت أرواحها بعقول % % عند قوم وليس هذا بذاكا % % 11(@)(@@) % وادخل الحضرة إن كنت فتى % % أو من الحضرة فاخرج وانتف % % PageV01P1085 11(@)(@@) % إنما العقل كاللسان لروح % % وبه النفخ أمر رب حباكا % % 12(@)(@@) % ثم بالنفخ كان مزيج أصول % % أربع واسمه المزاح اصطكاكا % % 12(@)(@@) % ملأ الكون تعالى ربنا % % بوجود ظاهر وهو خفي % % 13(@)(@@) % أنت روح نفخت في أمره % % درة من جسمها في صدف % % 13(@)(@@) % فبدت أربع المواليد منهافهو في الغيب ربنا جل ربا وهو في الكون أمره لا انفكاكا % % كيف ماشاء ربهن انسباكاسقط بيت ص % % 14(@)(@@) % آه من جهلك بالله ومن % % قلبك المنقلب المنحرف % % 14(@)(@@) % فهو من فوق عرشه لا مكان % % هو فيه إذ لا مكان هناكا % % 15(@)(@@) % أفلا تذكر أياما مضت % % أنت بها لم تكن يا منتفى % % 15(@)(@@) % وله الاستوا على العرش حقا % % وهو للكل ممسك إمساكا % % 16(@)(@@) % إن هذا المعنى الذي 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms211# قال عنه % % إنه فوق عرشه لأعداكا % % PageV01P1086 16(@)(@@) % كن كما كنت قديما فانيا % % واعرف الحق به واعترف % % PageV01P1087 البحر : - 1(@)(@@) % وإذا ذات كل شيء تبدت % % عنده حقق التقرب وصفه % % 2(@)(@@) % لحمى ذلك الغزال شهود % % يحرسون الذي يحاول خطفه % % 3(@)(@@) % وهو إنساننا وحيوان قوم % % وجنين من قبل ذاك ونطفه % % 4(@)(@@) % صدق الشرع فاعل وهو فعل % % فتأمل وللتحقق عطفه % % 17(@)(@@) % فاعرف الآن منك نفسك تجدها % % أمر رب وخلق أمر أتاكا % % 18(@)(@@) % واعتبر في الوجود علوا وسفلا % % ما ذكرناه واترك الإشراكا % % 19(@)(@@) % وتحقق به تجده قريباولتبقى به له ولتفنى عن سواه ولا تراه سواكا % % لك وافهم به لينطق فاكاسقط بيت ص % % 20(@)(@@) % وهو باق على الذي هو فيه % % أزلا ليس ما سواه اشتراكا % % PageV01P1088 البحر : - 1(@)(@@) % خفض عدوي في الهوى ومصادقي % % محبوبتي ذات الوشاح الخافق % % 2(@)(@@) % أنا لا أميل إلى سواها دائما % % إن شئت خالف في الهوى ووافق % % 21(@)(@@) % عز رب وجل عن كل شيء % % وتعالى يدبر الأملاكا % % PageV01P1089 البحر : - 1(@)(@@) % يا من تملك بالمحاسن مهجتي % % 2(@)(@@) % وإليه ملت ولا سواه بجملتي % % 3(@)(@@) % تجلى إلى متى أردت تفضلا % % بمروط أشباح الورى وقرا طق % % 3(@)(@@) % وأريده لما أقول أحبتي % % 4(@)(@@) % وهي التي كانت وكنت وهكذا % % هي هكذا بمغارب ومشارق % % 4(@)(@@) % خلص الهوى لك واصطفتك مودتي % % إني أغار عليك من ملكيكا % % 5(@)(@@) % أنا ثوبها روحا وجسما وهي في % % خلعي ولبس مثل لمحة بارق % % 5(@)(@@) % عيني بوجهك لا تزال قريره % % 6(@)(@@) % والقلب يضمر منك فيك سريره % % 6(@)(@@) % بل ما أنا ثوب لها بل تلك لي % % ثوب به أختال بين خلائق % % PageV01P1090 7(@)(@@) % بل لست ثوبا لا ولا هي ثوب لي % % يا سارقا قطعت يمين السارق % % 7(@)(@@) % وأنا الذي بك زاد عقلي حيرة % % 8(@)(@@) % فلو استطعت منعت لفظك غيرة % % إني أراه مقبلا شفتيكا % % 8(@)(@@) % هذا لفضاءا بدا فقم متنزها % % في النور واخرج من خلال مضايق % % 9(@)(@@) % واحذر فان وراء ذلك لا ورى % % من رائق لا يستقل وفاتق % % 9(@)(@@) % يا جامعي بكلامه المتشتت % % 10(@)(@@) % واشتق واضرب بالعصا حجرا تسل % % لك أعين منه بماء دافق % % 10(@)(@@) % من كل ناحية إليك تلفتي % % 11(@)(@@) % فتوض فيه واغتسل وادخل به % % للمسجد الأقصى محل رقائق % % 11(@)(@@) % أهفو إليك وعنك وجدي ما فتى % % PageV01P1091 12(@)(@@) % وأراك تخطر في شمائلك التي % % هي فتنتي فأغار 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms212# منك عليكا % % 12(@)(@@) % واسجد هناك لوجه حبك سجدة % % من بعدها اخرى سجود الوامق % % 13(@)(@@) % تلق المنى وتكون تحت ستائر % % من لطفه أبدا وتحت سرادق % % PageV01P1092 البحر : - 1(@)(@@) % قمر من فوق غصن نقا % % ينجلي سبحان من خلقا % % PageV01P1093 البحر : - 1(@)(@@) % جاهل كل من رأى % % إن شيئا تحركا % % 2(@)(@@) % والذي في تجرد % % قد رآه تنسكا % % 2(@)(@@) % هذه الأكوان طلعته % % كل من قد هام فيه رقى % % 3(@)(@@) % حيث بالنص من كتا % % ب إلهي تمسكا % % 3(@)(@@) % يا بريق الغور قف نفسا % % قد خطفت القلب والحدقا % % 4(@)(@@) % وهو لاشك عارف % % وهو ذو الفهم والذكا % % 4(@)(@@) % إن تجز يوما بذي سلم % % قل لهم جودوا ببعض لقا % % 5(@)(@@) % لي فؤاد ملؤه شغف % % وضلوع حشيت حرقا % % PageV01P1094 البحر : - 1(@)(@@) % إن قوما لم يروا % % 2(@)(@@) % حالتي لما سروا % % 3(@)(@@) % وعظامي قد بروا % % 4(@)(@@) % ليت شعري هل دروا % % أي قلب ملكوا % % 5(@)(@@) % قد جرى لي ما جرى % % 6(@)(@@) % وعيون كلما رمقت % % لم يدع منا الهوى رمقا % % 6(@)(@@) % بعدهم بين الورى % % 7(@)(@@) % قل لهم يا سعد مغرمكم % % كم يقاسي الدمع والأرقا % % 7(@)(@@) % آه من لي لو أرى % % 8(@)(@@) % وفؤادي لو درى % % أي شعب سلكوا % % PageV01P1095 8(@)(@@) % ذاب شوقا في محبتكم % % حين منكم بارق برقا % % 9(@)(@@) % شمس هذا الكون طالعة % % جذبت روح الذي رمقا % % 9(@)(@@) % أنا صب مغرم % % 10(@)(@@) % ذاتها من ذات لابسها % % وهما في النشأة افترقا % % 10(@)(@@) % واصطباري عدم % % 11(@)(@@) % وهي من أنوار بهجته % % بالعطايا تملأ الأفقا % % 11(@)(@@) % وهم القوم همو % % 12(@)(@@) % أتراهم سلموا % % أم تراهم هلكوا % % 12(@)(@@) % حنت الأرواح حين بدت % % مثل معشوق ومن عشقا % % 13(@)(@@) % ثم راح الجسم مضطربا % % شم ريح الأمر فانتشقا % % PageV01P1096 13(@)(@@) % عنهم الراوي روى % % 14(@)(@@) % وحنين لفرعا لا عجب % % نحو أصل باسمه نطقا % % 14(@)(@@) % إنهم في المستوي % % 15(@)(@@) % يا نسيمات سرت سحرا % % من شذاها الكون قد عبقا % % 15(@)(@@) % ثم من فرط الجوى % % 16(@)(@@) % خير بنا عن احبتنا % % وعن الأهلين والرفقا % % 16(@)(@@) % حار أرباب الهوى % % في الهوى وارتبكوا % % 17(@)(@@) % ليت من بالجزع لو عطفوا % % ليت من أهواه بي رفقا % % 18(@)(@@) % دمعتي بالسفح من أضم % % سفحت يوم النوى قلقا % % 19(@)(@@) % يا عذولي كف عن عذلي % % إن هذا اللوم محض شقا % % PageV01P1097 20(@)(@@) % لو ترى ما قد رأيت لما % % لمت في ساق هواه سقى % % 21(@)(@@) % في نواحي الشعب غانية % % حسنها في الكون ما اتفقا % % PageV01P1098 البحر : - 1(@)(@@) % فر يا 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms213# طائر إلى ربك % % عن سواه بمقتضى حبك % % 2(@)(@@) % وتعلق به على ثقة % % منه غيبا ومل إلى قربك % % 3(@)(@@) % فهو مولاك يرتضيك له % % عبد أن تبت فيه من ذنبك % % 22(@)(@@) % كما لاحت سجدت لها % % حيث كلي ذاب وانمحقا % % 23(@)(@@) % وأنا الفاني فواعجبا % % كيف لي منها بوصف بقا % % PageV01P1099 البحر : - 1(@)(@@) % بدرتم لاح في الغسق % % فوق غصن بالجمال سقى % % 2(@)(@@) % وبه الألباب هائمة % % سكرت منه فلم تفق % % 3(@)(@@) % عطرت روضتي نسائمه % % حين وافت بالشذا العبق % % 4(@)(@@) % وفؤادي فيه ذو شغف % % دائما والجفن ذو أرق % % 4(@)(@@) % وبه لا بك اختطفه تنل % % لمحة منه فهو في دربك % % 5(@)(@@) % واصطباري يوم جفونه % % ما بقى والوجد فيه بقى % % 5(@)(@@) % وإذا ما اختطفته فعلى % % نفسك الاختطاف لا ربك % % 6(@)(@@) % هائم صب كثير جوى % % عنه سدت سائر الطرق % % 6(@)(@@) % هو أدنى إليك منك له % % كل نفس فالنفس من حجبك % % 7(@)(@@) % خطفته منه بارقة % % غيرها في القلب لم يرق % % PageV01P1100 7(@)(@@) % أنت عنه بك احتجبت ولم % % يحتجب عنك في صفا شربك % % 8(@)(@@) % فأدارت كأس خمرته % % فهو منا اليوم في غرق % % 8(@)(@@) % إنما شف عنه ثوبك في % % لبسة الماء منك مع تربك % % 9(@)(@@) % فتجرد عن الوجود به % % وتحققه وافن عن سربك % % 10(@)(@@) % وعن الكل وابق فيه به % % حضرة المصطفى الذي هو بك % % PageV01P1101 البحر : - 1(@)(@@) % يا مبتلي بالغرام اصبر لأوجاعك % % لو كنت عاقل دليل العقل ما طاعك % % 2(@)(@@) % فاسلك بربك وخلي عنك أطماعك % % وانظر لأوضاعه واترك لأوضاعك % % 9(@)(@@) % وأثارت عرف روضته % % في الورى طوبى لمنتشق % % 10(@)(@@) % كيف لا اختال في مرح % % ومليح الوجه معتنقى % % PageV01P1102 البحر : - 1(@)(@@) % من مجيري من فاتر الطرف فاتك % % لا تحاكيه يا غزاله فاتك % % 2(@)(@@) % قمر طالع على غصن بان % % صانه الله وهو للصب هاتك % % 3(@)(@@) % يتثنى بقامة فتنتنا % % فارجعي يا غصون عن حركاتك % % 4(@)(@@) % يا بديع الجمال جرت علينا % % الأمان الأمان من فتكاتك % % 5(@)(@@) % لك ذات بها سلبت البرايا % % بتناويع حسنها من صفاتك % % 6(@)(@@) % أيها الوجه بالمحبين رفقا % % نحن مثل الشخوص في مرآتك % % 7(@)(@@) % كم على وجهك الجميل خمار % % من نفوس لما ظهرت بذاتك % % 8(@)(@@) % فاكشف الوجه وامحق النفس منا % % وأحي منا ميت الهوى بحياتك % % 9(@)(@@) % فيك بعنا نفوسنا واسترحنا % % من بلاها فجد لنا بالتفاتك % % 10(@)(@@) % كل شيء به ظهرت علينا % % فاختفينا 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms214# يا نور في ظلماتك % % PageV01P1103 11(@)(@@) % أنت طورا ولا سواك وأنا % % نحن طورا ولا سوى آياتك % % 11(@)(@@) % فاسالوا عيني فإن بها % % لمحة من داخل الحدق % % 12(@)(@@) % هي أطوارنا ترد إلينا % % كلها منك وهي بعض هباتك % % 12(@)(@@) % نلتها من حسن بهجة من % % لو بدا الكون لم يطق % % 13(@)(@@) % قسما بالصفا ومروة جسمي % % حين أسعى يا حب في مرضاتك % % 13(@)(@@) % ثم ذوقوا ما بقى بفمي % % من بقايا خمر كل تقى % % 14(@)(@@) % هذه أذنى لقد سمعت % % طيب ذاك الصوت فاسترق % % 14(@)(@@) % لم أحل عنك دائما فافهمي يا % % نفس حتى إن كنت في غفلاتك % % 15(@)(@@) % واسألوا أنفي فقد نفحت % % فيه ريا نفحة الفلق % % 15(@)(@@) % هذه سنة المحبين قبلي % % لك منها نقيم في جناتك % % PageV01P1104 16(@)(@@) % يا بني قومي خذوا خبري % % عن وجى قلبي وعن قلقي % % 17(@)(@@) % وانظروا نحوي فإن خفيت % % شمس ذاتي فاشهدوا شفقي % % 18(@)(@@) % كل ما تدرونه حجب % % لسعيد في الورى وشقي % % 19(@)(@@) % واحذروا في الله أن تقفوا % % عند شيء لاح في الأفق % % 20(@)(@@) % فالبرايا كلها فتن % % أي جمع غير مفترق % % 21(@)(@@) % كلها تمضي بأجمعها % % ثم يبقى الإثم في العنق % % 22(@)(@@) % واحذروا أن تعبدوا صنما % % نحتته فكرة فقي % % 23(@)(@@) % جل ربي في تنزهه % % عن وجودات على طلق % % 24(@)(@@) % فاسرعوا وامحوا الحروف بما % % عندكم من صفحة الورق % % 25(@)(@@) % قل أن يبدو النون لكم % % يأخذ الباقي من الرمق % % PageV01P1105 البحر : - 1(@)(@@) % إن جسمي هنا وقلبي هناكا % % وأنا الصب بين هذا وذاكا % % 2(@)(@@) % دار سلمى ما دار فيها محب % % قط إلا ذاق الفنا والهلاكا % % 3(@)(@@) % طلعة لا طلوع يعرف منها % % غير أمر يحرك الأفلاكا % % 4(@)(@@) % يا لسلمى ويا لأحباب سلمى % % هل لكم وقفة هنا نتشاكى % % 5(@)(@@) % هي منا قريبة وبعيد % % نحن عنها لقصدنا الإشراكا % % 6(@)(@@) % آه لو أنها دنت فتدلتاحذر احذر تجد بأنك عنها خارج بانفصال شيء دهاكا % % لك حتى بها رأيت مناكاسقط بيت ص % % 7(@)(@@) % كالنصارى في قولهم ولد الل % % ه يضاهون كاذبا أفاكا % % 8(@)(@@) % واليهود الذين قالوا بأنا % % نحن أبناء الله والكفر ذاكا % % 26(@)(@@) % واسلكوا سبل النجاة على % % دين طه زاكي الخلق % % 27(@)(@@) % ثم كونوا أثر سنته % % وبها فامشوا على نسق % % PageV01P1106 28(@)(@@) % وابعثوا لي دعوة وسلوا % % في غدا منا لذي فرق % % 29(@)(@@) % وصلاة الله دائمة % % مع سلام غير منحمق 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms215# % % 30(@)(@@) % للذي أنواره سطعت % % فأحالت صبغة الغسق % % 31(@)(@@) % أحمد المختار سيدنا % % من به قلبي مناه لقى % % 32(@)(@@) % ما بدا للكون منشئه % % خلف ستر أبيض يقق % % PageV01P1107 البحر : - 1(@)(@@) % أنا الهيكل الذاتي لمظهر قدرة % % 2(@)(@@) % ومن شاخصي قد حزت أكمل صورة % % 3(@)(@@) % ولما تأملت الوجود بفكرة % % 4(@)(@@) % رأيت خيال الظل أكبر عبرة % % لمن هو في علم الحقيقة راقي % % 5(@)(@@) % على كل شيء سيف عزمي قد انتضى % % 6(@)(@@) % وفي ليل غيبي صبح معرفتي يضي % % 7(@)(@@) % وكل الورى من بعد ذا لست ارتضي % % 8(@)(@@) % شخوص أشباحو تمر وتنقضى % % وتفنى جميعا والمحرك باقي % % 9(@)(@@) % حيث معنى هذا انفصال لشيء % % عن إله الورى وما أدراكا % % 10(@)(@@) % وهو كفر منزه عنه ربي % % قد نهاهم عن مثله ونهاكا % % PageV01P1108 11(@)(@@) % إنما الله عالم من قديم % % كل شيء والشي ليس هناكا % % 12(@)(@@) % وبإنزاله هو الذكر يتلى % % لم يكن عنه خارج محراكا % % 13(@)(@@) % وهو الله لا سواه ولكن % % علمه منزل به الأملاكا % % 14(@)(@@) % كالبرايا جميعهم ولهذا % % هو قيومهم كما قد أتاكا % % 15(@)(@@) % حاش لله أن يكون من الل % % ه انفصال للشيء قل حاشاكا % % 16(@)(@@) % وسع الله كل شيء كما قا % % ل وشيء له الفنا في فناكا % % PageV01P1109 البحر : - 1(@)(@@) % رأيت خيال الظل أكبر عبرة % % يلوح بها معنى الكمال لا حداقي % % 2(@)(@@) % وفي كل موجود على الحق آية % % لمن هو في علم الحقيقة راقي % % 3(@)(@@) % شخوص وأشباح تمر وتنقضي % % وليس لها مما قضى الله من واقى % % 4(@)(@@) % لها حركات ثم يبدو سكونها % % وتفنى جميعا والمحرك باقي % % 17(@)(@@) % هو علم له تعالى فذكر % % نازل منه فيه ليس انفكاكا % % 18(@)(@@) % أنت يا غافل الذي لست تدري % % عارفا كن بنفسك النساكا % % 19(@)(@@) % قمر نائب عن الشمس ليلا % % فإذا ما النهار جاء محاكا % % 20(@)(@@) % إنما ظل نفسك الليل فامحق % % كرة الأرض عنك تلق هداكا % % PageV01P1110 البحر : - 1(@)(@@) % الله يفتح كل باب مغلق % % وهو المقيد للوجود المطلق % % 2(@)(@@) % والفكر في يده كمفتاح لنا % % يبدي به عنا الذي فينا بقى % % 21(@)(@@) % هو نور وما سواه ظلام % % فالق عنك السوى به يلقاكا % % PageV01P1111 البحر : - 1(@)(@@) % ليس لله في الوجود شريك % % لا اشتباه فيه ولا تشكيك % % 2(@)(@@) % والذي يدعي الوجود مع الل % % ه دعواه هذه تشريك % % 3(@)(@@) % فالجأ إليه وكن به متعلقا % % لا فاز من هو 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms216# ليس بالمتعلق % % PageV01P1112 البحر : - 1(@)(@@) % هي الذات التي فوق البراق % % تحن إلى ذرى السبع الطباق % % 2(@)(@@) % لها بالجسم منها ثوب در % يشف على معانيها الدقاق % % 3(@)(@@) % فمن ينأى إليها فهو دان % % ومن يفنى عليها فهو باقي % % 3(@)(@@) % إنما الله ظاهر يتجلى % % وهو نور يمحى به التحليك % % 4(@)(@@) % وما بسوى المحبة كون شيء % % وليس الميل إلا للتلاقي % % 4(@)(@@) % ومحيط بكل شيء كما قا % % ل ولا شيء سوقة ومليك % % 5(@)(@@) % وأنوار الجمال بكل قلب % % تسمى بالهوى والاشتياق % % 5(@)(@@) % فاعرف اعرف من قبل موتك يا من % % لم يفده نصح ولا تسليك % % 6(@)(@@) % ولم يكن النعيم سوى التداني % % ولم يكن العذاب سوى الفراق % % 6(@)(@@) % لتكن مؤمنا بربك حقا % % ويزول التسكين والتحريك % % PageV01P1113 7(@)(@@) % وترى الكل فيه كن فيكون الأم % % ر منه له اللجين السبيك % % PageV01P1114 البحر : - 1(@)(@@) % يا وجودي إنني الصورة لك % % أنت قد صورتها وهي ملك % % 2(@)(@@) % شهد الحق ولم يشهد سوى % % إنه الشاهد سوى وملك % % 3(@)(@@) % صورتي فعل له وهو الذي % % صاغها من عدم رب الفلك % % 4(@)(@@) % وكذا الأشياء طرا قل كذا % % حكمها شرعا لمن قد سألك % % 5(@)(@@) % يا ابنة العز إلى كم شغفي % % أي يوم يعدم النور الحلك % % 6(@)(@@) % وأنا تلك كما تلك أنا % % وهما الواحد والاثنان لك % % 7(@)(@@) % وكل الكون في الدنيا حجاب % % وفي الأخرى عن الوجه الملاقي % % 7(@)(@@) % قلت لما هي قالت لي وقد % % غلقت أبوابها لي هيت لك % % 8(@)(@@) % وأنت الكأس والأسرار خمر % % ومجلسك التقى والله ساقي % % 8(@)(@@) % ومعاذ الله قولي عندما % % ظهرت لي غيرها خذ أملك % % PageV01P1115 9(@)(@@) % وبدا برهان ربي ظاهرا % % واختفت أغياره عمن سلك % % 9(@)(@@) % فما لك لا تطير هوى وسكرا % % وقد حييت بالكاس الدهاق % % 10(@)(@@) % جل ربي وتعالى فز به % % يا رفيقي وتدارك من هلك % % 10(@)(@@) % أزل نومي بشدوك يا نديمي % % وابدل لي خلافك بالوفاق % % 11(@)(@@) % وحي على المنى يا ابن المعاني % % ولا تفتن بألفاظ رقاق % % 11(@)(@@) % هذه الغفلة نار أوقدت % % فاطفها بالذكر واسبق أجلك % % 12(@)(@@) % وخذ مني وناولني إلى أن % % تراني قد وصلت إلى التراقي % % 13(@)(@@) % ومن بالحق يقذف لاح جهرا % % وما التفت له ساق بساق % % 14(@)(@@) % هناك تضمحل به رسومي % % وأذهب بانسحاق وانمحاق % % 15(@)(@@) % ويبطل كل شيء كان حتى % % مقالي ذا وفهمي مع مذاقي % % PageV01P1116 16(@)(@@) % ويبقى مثل ما 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms217# قد كان ربي % % على ما كان وهو أجل واقي % % 17(@)(@@) % ويخفى الكون من غير اختفاء % % ويبدو النور من غير انفهاق % % PageV01P1117 البحر : - 1(@)(@@) % كل شيء فيه وفي كل شيء % % هو فاعلم وكل شيء هالك % % 2(@)(@@) % فهو لا غيره وضلت أناس % % جهلوه وهو المليك المالك % % 3(@)(@@) % فارفع الشيء عنه وانظر إليه % % تلقه ناظر إليك كذلك % % 18(@)(@@) % ودنسناه بالافهام حينا % % وبالأقوال والبحث المساق % % 19(@)(@@) % إلى إن جاد غيث الفيض منه % % بماء القدس وانفتحت سواقي % % 20(@)(@@) % إذا قلنا عرفناه جهلنا % % وهل فرع لأوج الأصل راقي % % PageV01P1118 البحر : - 1(@)(@@) % لم أزل في الحب يا أملي % % اخلط التوحيد بالغزل % % 2(@)(@@) % وعيوني فيك ساهرة % % دمعها كالصيب الهطل % % 3(@)(@@) % ليت لي من نور طلعتكم % % لمحة كي تنطفى غللي % % 4(@)(@@) % إن أحشائي بكم تلفت % % بل وجسمي في الغرام بلى % % 5(@)(@@) % واصطباري يوم جفوتكم % % زال والتهيام لم يزل % % 21(@)(@@) % وريح المسك في الصندوق يفشو % % ويعرف منه قدر الانتشاق % % 22(@)(@@) % وهل نور النجوم يلوح إلا % % على مقدار إدراك المآقي % % 23(@)(@@) % هو الحق المبين وكل شيء % % سواه باطل بالاتفاق % % 24(@)(@@) % قديم لا بمعنى فهم كون % % وباق لا كقول الخلق باقي % % PageV01P1119 البحر : - 1(@)(@@) % إن كنت تدري الرزق في بلدة % % أو في مكان فاطلب الرزقا % % 2(@)(@@) % وإن علمت الحق ينساك من % % رزقك يوما ذكر الحقا % % 3(@)(@@) % وإن دخلت البيت تبغى به % % توكلا كيلا ترى الخلقا % % 4(@)(@@) % فإنها تجربة وهي في % % ربك شك يمنع الصدقا % % 5(@)(@@) % وإنما الحيلة في تركك ال % % حيلة فاتركها لكي ترقى % % 6(@)(@@) % جد لعيني باللقاء ولو % % في الكرى يا غاية الأمل % % 7(@)(@@) % وتلطف بالمشوق ودع % % ذا الجفا واعطف وجد وصل % % 8(@)(@@) % وأبح مضناك بعض لقا % % يا شفا قلبي من العلل % % 9(@)(@@) % يا منى هذا الفؤاد ويا % % بغيتي يا كل متكلي % % 10(@)(@@) % يا ضيا شمسي إذ طلعت % % في الضحى مني وفي الطفل % % PageV01P1120 البحر : - 1(@)(@@) % إنني جمع وفرق % % إنني أمر وخلق % % 2(@)(@@) % إنني عال ودون % % إنني فتق ورتق % % 3(@)(@@) % إنني خير وشر % % إنن كذب وصدق % % 4(@)(@@) % إنني علم وجهل % % وثبوت بل ومحق % % 5(@)(@@) % وأنا الشمس وللشم % % س أنا غرب وشرق % % 6(@)(@@) % وتباهى بي زماني % % وتسامت بي دمشق % % 7(@)(@@) % وعلى أهل زماني % % كلهم سرى يدق % % 8(@)(@@) % إن حقي باطل بل % % باطلي عندي حق % % 9(@)(@@) % وتأمل إنني عن % % نور ذاك الغيب 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms218# برق % % 10(@)(@@) % ولحسادي مني % % دائما قتل وحرق % % PageV01P1121 11(@)(@@) % وأنا السيف الذي لا % % ينتضى إلا يشق % % 11(@)(@@) % يا مرادي حين قلت ويا % % جل قصدي حين لم أقل % % 12(@)(@@) % دع ضفادع أرضنا في % % أجن الماء تنق % % 12(@)(@@) % خذ أمانا من قلاك لنا % % إننا منه على وجل % % 13(@)(@@) % وكلاب الحق قد أو % % جعلها الليث المشق % % 13(@)(@@) % ثم كن فيما يكون كما % % كنت في أيامك الأول % % 14(@)(@@) % ذا التجافي كم أكابده % % آه قلت في الهوى حيلي % % 14(@)(@@) % فتسلت بنباح % % غيره لا تستحق % % 15(@)(@@) % والذي أهواه ومشتمل % % من ملاح الكون في حلل % % 15(@)(@@) % وعلى الجملة ما ث % % م سوى الحق محق % % PageV01P1122 16(@)(@@) % وسرت من نحو كاظمة % % نسمة فيها انمحى طللي % % 17(@)(@@) % وبروق الحي لامعة % % حان لما أومضت أجلي % % 18(@)(@@) % هذه الأكوان أجمعها % % شمة من وردة الأزل % % 19(@)(@@) % عطرتني عند ما نفحت % % ما أنا عنها بمشتغل % % 20(@)(@@) % طيب أثواب المليح بدا % % فائحا من جانب الكلل % % 21(@)(@@) % وثغور الزهر قد بسمت % % من روابي أشرف الرسل % % 22(@)(@@) % يا عذولا لا مني سفها % % أنا لا أصغي إلى العذل % % 23(@)(@@) % قلبي المضنى حليف جوى % % عن هوى الغزلانلم يحل % % 24(@)(@@) % مغرم صب بذي عظم % % جل عن علمي وعن عملي % % 25(@)(@@) % ماله في الخلق من شبه % % ماله في الأمر من مثل % % PageV01P1123 البحر : - 1(@)(@@) % إلا أن ذاتي ذات كل الخلائق % % وسل عنه ذا علم كريم الخلائق % % 2(@)(@@) % ولا صفة إلا ومني تعينت % % لموصوفها إذ كنت أصل الرقائق % % 3(@)(@@) % أنا الجوهر الساري بغير سراية % % ألوح وأخفي في جميع الحقائق % % 4(@)(@@) % أنا مركز الأدوار حيث طريقتي % % يؤول إليها أمر كل الطرائق % % 5(@)(@@) % أنا الظاهر المعروف في كل رتبة % % أنا الباطن المخفي بين الخلائق % % 6(@)(@@) % أنا القطب بوابي أنا الغوث خادمي % % أنا الفرد يخشى من دخول مضايقي % % 7(@)(@@) % أنا النور نور العين مني تكونت % % عيون البرايا من مشوق وشائق % % 8(@)(@@) % أنا العلم علم الحق في كل كائن % % ولم يدر قولي في الملا غير ذائق % % 9(@)(@@) % لنا المجلس العالي على أيمن الحمى % % يدار علينا بالكؤوس الروائق % % 10(@)(@@) % لنا الأعين اللاتي بها الحق قد رعى % % رياض التجلي لا رياض الشقائق % % PageV01P1124 11(@)(@@) % مقالة حق انكرتها بصيرة % % سوى الغي منها والردى غير لائق % % 26(@)(@@) % جل عن قولي أجل وعن % % كل خاف لي وكل 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms219# جلي % % 27(@)(@@) % ذو اتصال غير متصل % % وانفصال غير منفصل % % 28(@)(@@) % لم يمل عن أمره أحد % % دائما في سائر الملل % % 29(@)(@@) % غير أن الأمر منقسم % % للصواب المحض والزلل % % 30(@)(@@) % وانقسام الأمر يظهر في % % مقتضى أشخاصه السفل % % 31(@)(@@) % وهو في العلياء واحدة % % قبل أن يبدو لذي مقل % % 32(@)(@@) % هذه بهى أ ملابسنا % % حلة زرت على بطل % % 33(@)(@@) % لم نفصلها لغير فتى % % عزمه خالي من الكسل % % 34(@)(@@) % خمرة منها النهى سكرت % % شربة أحلى من العسل % % PageV01P1125 35(@)(@@) % فاقبلونا يا أحبتنا % % وابشروا بالمنزل الجلل % % PageV01P1126 البحر : - 1(@)(@@) % الكل حق والكل باطل % % والكل مستعمل وعاطل % % 2(@)(@@) % والكل ينبوع ماء عين % % والكل غيث المغيث هاطل % % 3(@)(@@) % وعدتنا أن نراك يا من % % في وعده الحق غير ماطل % % 4(@)(@@) % وقد رأيناك بين حق % % سما وجودا وبين باطل % % 5(@)(@@) % ذواتنا فيك حاليات % % وما الحوالي مثل العواطل % % 6(@)(@@) % وكل من لم يكنك خاطي % % وكل من لم تكنه خاطل % % 12(@)(@@) % فقل لنفوس قيدتها عقولها % % إلى كم قيام في ظلام البوائق % % 13(@)(@@) % أمحجوبة عنكم خريدة توبة % % تلوح بوجه كاشف الغيب فائق % % 14(@)(@@) % مشايخكم أطفالنا وكهولكم % % أجنة جهل في بطون العوائق % % 15(@)(@@) % قفوا عند ما تدرونه من ظواهر % % رمتكم بأمر للمهالك سائق % % PageV01P1127 16(@)(@@) % ولا تتعدوا طوركم إن ههنا % % صقي حسام في يد الحق حائق % % PageV01P1128 البحر : - 1(@)(@@) % كشف ألحجب عن عيني % % ونور الوجه قد أشرق % % 2(@)(@@) % وبيني زال من بيني % % ولاح البرق بالأبرق % % 3(@)(@@) % فلا كيفي ولا أيني % % ومن يعلق بنا يغرق % % 7(@)(@@) % وأنت أنت الوجود حقا % % ولا مماري ولا مماطل % % 8(@)(@@) % ونحن لا نحن غير أنا % % لماء إيجادنا قساطل % % PageV01P1129 البحر : - 1(@)(@@) % دمعي لخوفك يا مولاي صار دما % % 2(@)(@@) % والقلب مما به قد شارف العدما % % 3(@)(@@) % فاغفر ذنوب امرئ يرجوك مكتتما % % 4(@)(@@) % وحبي قد وفى في ديني % % بزاهي ثغره الأفرق % % 4(@)(@@) % يا من علا فرأى ما في الغيوب وما % % تحت الثرى وظلام الليل منسدل % % 5(@)(@@) % عبد ذليل فقير الصبر ذاهبه % % 5(@)(@@) % دور % % 6(@)(@@) % جور الزمان وفرط البين ناهبه % % 6(@)(@@) % بدا بالجانب الغربي % % جمال الوجه من سلمى % % 7(@)(@@) % وزال البعد بالقرب % % وطاب المبسم الألمي % % PageV01P1130 7(@)(@@) % يا من على الخلق لا تحصى مواهبه % % 8(@)(@@) % أنت الغياث لمن ضاقت مذاهبه % % أنت الدليل لمن حارت به الحيل % % 8(@)(@@) % ولاح السر في قلبي % % وربى زادني علما % % 9(@)(@@) % فيا بدري ويا 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms220# زيني % % تجافيك الشجى احرق % % 9(@)(@@) % يرجوك حيث خطوب الدهر طارقة % % 10(@)(@@) % وحيث ألسننا بالحمد ناطفة % % 10(@)(@@) % دور % % 11(@)(@@) % فالطف فعادات خير منك سابقة % % 11(@)(@@) % سقاني الكاس من نفسي % % وفيه خمرة الأرواح % % 12(@)(@@) % أنا قصدناك والآمال واثقة % % والكل يدعوك ملهوف ومبتهل % % PageV01P1131 12(@)(@@) % فسكري كان عن حسي % % وعن عقلي وعن ما لاح % % 13(@)(@@) % كن غافر يا إلهي ذنب مجترم % % 13(@)(@@) % وقد أخرجت من حبسي % % إلا إطلاق ساقي الراح % % 14(@)(@@) % وصدقي بان من ميني % % وعود الحظ قد أورق % % 14(@)(@@) % يقضي الليالي بدمع فيك منسجم % % 15(@)(@@) % وقد أتيتك والأوزار في عظم % % 15(@)(@@) % دور % % 16(@)(@@) % فإن غفرت فذو من وذو كرم % % وإن سطوت فأنت الحاكم العدل % % 16(@)(@@) % لنا الألحان قد رقت % % وراق الجنك والطنبور % % 17(@)(@@) % وأسراري لقد حقت % % وقلبي بالمنى مسرور % % PageV01P1132 17(@)(@@) % عبد الغني له الأيام رائمة % % 18(@)(@@) % من الصبي وعيون الحظ نائمة % % 18(@)(@@) % وأستارا الحجى انشقت % % وناري بدلت بالنور % % 19(@)(@@) % وعن عيني انمحى غيني % % فكيف الصب لا يأرق % % 19(@)(@@) % فاسعفه يا من به الألباب هائمة % % 20(@)(@@) % دور % % 20(@)(@@) % ثم الصلاة على المختار دائمة % % ما عطر الروض صوب الديمة الهطل % % 21(@)(@@) % لحاك الله يا لاحي % % إلى كم منك هذا اللوم % % 22(@)(@@) % فإني المثيب الماحي % % وإني من رجال اليوم % % 23(@)(@@) % مني ماذقت من راحي % % عرفت العذر عند القوم % % PageV01P1133 البحر : - 1(@)(@@) % جسد في هوى المليح عليل % % وفؤاد للشوق فيه غليل % % 2(@)(@@) % وظهور كما ترى وبطون % % يحصل النقص منه والتكميل % % 3(@)(@@) % وستور تماط عن وجه حق % % فيحق الرجاء والتأميل % % 4(@)(@@) % وبروق بها الظلام ضياء % % ورعود بها العلوم تسيل % % 5(@)(@@) % أيها الركب هذه دار سلمى % % فانزلوها ما خاب فيها التنزيل % % 6(@)(@@) % واسمعوا من فم الوجود كلاما % % لا اعوجاج به ولا تحويل % % 7(@)(@@) % واشربوه عتيقة جددوهما % % بكؤس مزاجها زنجبيل % % 8(@)(@@) % واقرأوه الكتاب لا ريب فيه % % نازل دائما به جبريل % % 9(@)(@@) % وإذا شئتموه فهو مليح % % أغيد زان طرفه التكحيل % % 10(@)(@@) % ملك الحسن وجهه الحق نور % % فوقه التاج لاح والإكليل % % PageV01P1134 11(@)(@@) % وهو في الكون عندنا قرآن % % لا زبور بقى ولا إنجيل % % 12(@)(@@) % وفهوم جميعها أسرار % % وعلوم أتى بها التنزيل % % 24(@)(@@) % تعال ادخل بلا شين % % إلى تيار ذا المغرق % % 25(@)(@@) % دور % % 26(@)(@@) % جعلت الشرع معقولك % % وربك مقتضى الأفكار % % 27(@)(@@) % فراجع فيه منقولك % % فقبلك عاندت كفار % % 28(@)(@@) % ألم تسلم على قولك % % لربك أنت في إنكار % % 29(@)(@@) % وما بالهين 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms221# اللين % % مقامي للدما اهرق % % 30(@)(@@) % دور % % 31(@)(@@) % صلاة الله مولانا % % على نور الهدى أحمد % % PageV01P1135 32(@)(@@) % ومن بالحق أولانا % % لنيران العدى أخمد % % 33(@)(@@) % به عبد الغني الآنا % % ذوي الكتذيب قد أكمد % % 34(@)(@@) % جلا بالجمع للرين % % عن القلب الذي أفرق % % PageV01P1136 البحر : - 1(@)(@@) % وجهي بنور الحق في إشراق % % والقيد مني في الهوى إطلاقي % % 2(@)(@@) % فاعطف علينا بالفنا يا باقي % % واكشف لنا أستار وجه الساقي % % 3(@)(@@) % دور % % 4(@)(@@) % عندي جميع الخلق عين الأمر % % مذ راق في الكاسات صرف الخمر % % 5(@)(@@) % والحب فيه طاب طول العمر % % فافخر به في موكب العشاق % % 6(@)(@@) % دور % % 7(@)(@@) % يا لائمي بالله دع من لومي % % وافتح عيون القلب من ذا النوم % % 8(@)(@@) % واحذر من الأغراق كن في عوم % % بحر الهوى يخشى من الأغراق % % 9(@)(@@) % دور % % 10(@)(@@) % للعين أنواع الورى أجفان % % والناظر الرائي هو الإنسان % % PageV01P1137 11(@)(@@) % والفرد لا تلوى به الأكوان % % عن ذلك الفرد الأجل الوافي % % 12(@)(@@) % دور % % 13(@)(@@) % ملة للموحدين نهار % % وعلى المشركين ليل طويل % % 13(@)(@@) % قلبي لأسرار التجلي بيت % % والوصف في مصباح ذاتي زيت % % 14(@)(@@) % والحي من كل البرايا ميت % % في كل أطوار التدلي راقي % % 14(@)(@@) % هجموا بالعقول فاغترفوها % % فإذا في كفوفهم تخييل % % 15(@)(@@) % وأرادوا أن يظفروا فأتاهم % % من هداها الحرمان والتضليل % % 16(@)(@@) % قصدوها تكون طبق هواهم % % فأبت واختفى إليها السبيل % % 17(@)(@@) % فغدوا ينكرون مالم ينالوا % % ولهم بادعائهم تعليل % % 18(@)(@@) % حظهم ثلم حظهم من سواها % % ليس إلا الوسواس والتسويل % % PageV01P1138 19(@)(@@) % هذه الحضرة التي أهلها قد % % منعوها عمن به تطفيل % % 20(@)(@@) % ولتفصيلها بهم إجمال % % ولا جمالها بهم تفصيل % % 21(@)(@@) % وقف القوم حائرين لديها % % وجريح منهم بها وقتيل % % 22(@)(@@) % كلما أومأت إليهم بشيء % % كان للشيء عندهم تفضيل % % 23(@)(@@) % تارة بالجمال فيهم تجلت % % وعليهم فكل شيء جميل % % 24(@)(@@) % وإذا بالجلال كان التجلي % % طال قال من الجهول وقيل % % 25(@)(@@) % يا بني هذه الطريقة أنتم % % في جنان وماؤكم سلسبيل % % 26(@)(@@) % ولكم رزقكم من الله يأ % % تيكم به منه بكرة وأصيل % % PageV01P1139 البحر : - 1(@)(@@) % عشق ذات الخال عشقي % % وأنا السيف الدمشقي % % 2(@)(@@) % مطلق الحدين صلتا % % بيد الحق المشق % % 3(@)(@@) % اقطع الأعداء للحا % % ل مدى غرب وشرق % % 4(@)(@@) % وبمن عندي تجلى % % أسعد القوم وأشقى % % 5(@)(@@) % فادخل الحضرة يا من % % قصده يزكو بنشق % % 6(@)(@@) % واغترف من بحر علمي % % واقتطف من زهر عشقي % % 7(@)(@@) % وامشقوا يا أيها القو % % م 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms222# على آثار مشقي % % 8(@)(@@) % واحذروا فالقوس موتو % % ر بتصويب ورشق % % 9(@)(@@) % والقنا السمر استقامت % % لي على طعن وشق % % 27(@)(@@) % فاعبدوه به على الكشف منكم % % وليراع التحريم والتحليل % % PageV01P1140 28(@)(@@) % ثم كونوه بالفنا وليكنكم % % بالبقاء فهو أصل فرع أصيل % % 29(@)(@@) % هي سلمى وكلهم طالبوها % % وإليها كل القلوب تميل % % 30(@)(@@) % ظهرت بالقدود ومنعطفات % % وبوجه كأنه قنديل % % 31(@)(@@) % فرأينا الهدى ولا تشبيه % % قد بقى عندنا ولا تعطيل % % 32(@)(@@) % صاح خفض عليك ليس يريك الح % % ق ذا الانقطاع والتبتيل % % 33(@)(@@) % لمتى الجهل فيك هاهي لاحت % % أين منك التكبير والتهليل % % 34(@)(@@) % لا ترمها إن كنت تبخل بالنف % % س عليها هيهات يحظى البخيل % % 35(@)(@@) % وادخل الدار دارها بخضوع % % لتراها بها وأنت ذليل % % PageV01P1141 البحر : - 1(@)(@@) % عشق المليح الغالي % % أفنى وجود العاشق % % 2(@)(@@) % ما عنه قلبي سالي % % لعرف حسنه ناشق % % 3(@)(@@) % هذا علينا والي % % بالسهم قلبي راشق % % 4(@)(@@) % غيبت عن أخوالي % % ما الصعو مثل الباشق % % 5(@)(@@) % دور % % 6(@)(@@) % لما بدا يتجلى % % بحسن وجه زاهي % % 7(@)(@@) % إليه قلبي صلى % % وما أنا باللاهي % % 8(@)(@@) % وفي هواة كلا % % عنه تراني ساهي % % 9(@)(@@) % وكاتب الأمالي % % في لوح قلبي ماشق % % 10(@)(@@) % دور % % PageV01P1142 36(@)(@@) % وتقرب بما حويت إليها % % فعساها لما طلبت تنيل % % 37(@)(@@) % كم فتى عنه أسفرت وتبدت % % لكن الطرف عمن سناها كليل % % 38(@)(@@) % وهي في الكل تنجلي بثياب ال % % كل لولا التصوير والتمثيل % % 39(@)(@@) % شمس ذات لها النفوس شعاع % % في البرايا والجسم ظل ظليل % % 40(@)(@@) % كل شيء بها لقد صار شيئا % % ولتحقيره بها تبجيل % % 41(@)(@@) % فهي لا غيرها وإن راح جيل % % قد تجلت به وأقبل جيل % % 42(@)(@@) % والمعاني كثيرة من ضلال % % وهدى لكن الصواب قليل % % 43(@)(@@) % والذي نحن فيه لا يتعتريه النس % % خ طول المدى ولا التبديل % % 44(@)(@@) % فتمسك فقد نصحتك والزم % % وعلى ما أقول ربي الوكيل % % PageV01P1143 البحر : - 1(@)(@@) % العلم والمال عدوان لم % % يجتمعا إلا اقتضى الحال % % 2(@)(@@) % فساد وصف منهما ذلك الآ % % خر فليستيقظ البال % % 3(@)(@@) % فالعلم إن لم يفسد المال في % % وجه الهدى أفسده المال % % 11(@)(@@) % صلى وسلم ربي % % على كثير الأنوار % % 12(@)(@@) % طه نبي القرب % % ومن حبي بالأسرار % % 13(@)(@@) % عبد الغني بالحب % % فيه كثير الأطوار % % PageV01P1144 البحر : - 1(@)(@@) % من يعرف الله فليس يسأل % % والله لا يسأل عما يفعل % % 2(@)(@@) % كما أتى سبعون ألفا تدخل % % لجنة بلا حساب يحصل % % 14(@)(@@) % ما لاح 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms223# نجم عالي % % في جنح ليل واسق % % PageV01P1145 البحر : - 1(@)(@@) % يا فاضلا فضله يسمو على الفضلا % % 2(@)(@@) % ومن على كل مجد في الأنام علا % % 3(@)(@@) % وعارف ربه لا يجهل % % وهو به لأمره يمتثل % % 3(@)(@@) % أصبحت أهواك لا أبغي السوى بدلا % % 4(@)(@@) % هم يسألون عنه حيث انفصلوا % % بالنفس قاموا إلا به اتصلوا % % 4(@)(@@) % بالله اقسم لا بالعادلات ولا % % بالذرايات ولا بالنجم والفلق % % 5(@)(@@) % والعارف الذي به يتصل % % وجاهل عنه هو المنفصل % % 5(@)(@@) % صبت عليك ولو بالروح ما بخلا % % 6(@)(@@) % وقلبه لم يزل بالشوق مشتعلا % % 6(@)(@@) % معنى انفصاله الحجاب يسدل % % عليه وهو النفس معنى يبطل % % PageV01P1146 7(@)(@@) % في نفسه يقول نفسي يبخل % % بها على الله لها لا يبذل % % 7(@)(@@) % وقد جبتأ الذي عن حالتي سألا % % 8(@)(@@) % إني أحبك لا أرجو نداك ولا % % أخشى أذاك ولا ألقاك بالملق % % 8(@)(@@) % والاتصال ربه لا يعزل % % عنه يوليه عليه فاعقلوا % % 9(@)(@@) % لا ربه في النفس منه يحلل % % أو باتحاد فيه عنه يجلل % % 9(@)(@@) % عيشي برؤياك عيش لم يزل رغدا % % 10(@)(@@) % معبوده به عليه مقبل % % لاذاك معنى في الخيال يافل % % 10(@)(@@) % وصدق حالي لا يخفى وفيك بدا % % 11(@)(@@) % ونفسه بالله قامت تعمل % % فهو الإمام الكامل المكمل % % 11(@)(@@) % وهل أحبك عمري ساعتي وغدا % % PageV01P1147 12(@)(@@) % لا يدعي أمر أفلا التحول % % له ولا القوة فيما يجعل % % 12(@)(@@) % إلا محبة عبد يرتجى أبدا % % أن لا يفارق معنى وجهك الطلق % % 13(@)(@@) % وكل ذي ذوق له مفصل % % لا أن هذا عنده تخيل % % 14(@)(@@) % والله للخير هو المؤملوالنفس منها كل شيء يفعل وهي وما منها إليه يوكل % والشر لا إليه ينقلسقط بيت ص % % PageV01P1148 البحر : - 1(@)(@@) % هو الحب سهم البعد في القلب راشق % % 2(@)(@@) % وأنفي به عرف المعارف ناشق % % 3(@)(@@) % وقوم رأوا أني على الصيد باشق % % 4(@)(@@) % يقولون لي بالله هل أنت عاشق % % فقلت وهل يوما خلوت من العشق % % 5(@)(@@) % بمحو السوى كم فرج الله كربة % % 6(@)(@@) % وكل في قلب المحقق قربة % % 7(@)(@@) % ومذ عاينت في الغيب عيني أحبة % % 8(@)(@@) % شربته بكاس الحب في المهد شربة % % حلاوتها حتى القيامة في حلقي % % 15(@)(@@) % وفعله لكل فعل يشمل % % لأنه الآخر وهو الأول % % 16(@)(@@) % فالصادق الذي إليه يصل % % بالصدق في التوحيد ذوقا يكمل % % PageV01P1149 17(@)(@@) % عن نفسه بربه مشتغل % % وربه كما يقول المرسل % % 18(@)(@@) % سمع له وبصر وأرجل 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms224# % % يعنى به ينشط ليس يكسل % % 19(@)(@@) % يصعد بالقرب له لا يسفل % % والرب بالذكر عليه ينزل % % 20(@)(@@) % ثم لديه كل شيء يبطل % % والحق حق فيزول المشكل % % 21(@)(@@) % والله حيث الشر عنه يهمل % % يهمل عن عارفه لا يحمل % % 22(@)(@@) % لأنه مصور ممثل % % يظهر فيه علمه والعمل % % PageV01P1150 البحر : - 1(@)(@@) % ما الغير إلا بابه المغلق % % وكلنا مفعوله المطلق % % 2(@)(@@) % وليس مفعولا به عندنا % % لأننا للفعل لا نسبق % % 3(@)(@@) % وأننا المعنى الذي فعله % % جاء به لما لنا يخلق % % 4(@)(@@) % وليس مفعول به ظاهرا % % بالفعل والسبق له حققوا % % 5(@)(@@) % وقولهم ذا ليس شرطا له % % يرده بالصدر من يصدق % % 6(@)(@@) % بل لك مفعول به سابق % % للفعل قطعا عند من يفرق % % 7(@)(@@) % وكل من يجحد قولوا له % % هات مثالا عندنا يطبق % % 8(@)(@@) % يكون مفعولا به ماله % % سبق على الفعل الذي يلحق % % 9(@)(@@) % فإن يكن حاول في لفظة % % جاء بها في النطق إذ ينطق % % 10(@)(@@) % فأخبروه ليس مقصودنا % % لفظ لنا يأتي به المنطق % % PageV01P1151 11(@)(@@) % وإنما المعنى مردا الذي % % يقول والحق به مشرق % % 23(@)(@@) % وهو لسره النزيه هيكل % % يروق للوارد منه المنهل % % 24(@)(@@) % طينته للشر ليس تقبل % % وهو على الخير به منجبل % % 25(@)(@@) % فما ترى يصدر منه الزلل % % وبالتقى يضرب فيه المثل % % 26(@)(@@) % تحرسه عين الهدى وتكفل % % والله يعطيه الذي يؤمل % % 27(@)(@@) % وربه حافظه لا يخذل % % في عمره حتى يحل الأجل % % 28(@)(@@) % بعزمه صعب الأمور يسهل % % وهو الذي يقال فيه الرجل % % 29(@)(@@) % شهم همام لوذعي بطل % % يفعل ما يقصر عنه الأسل % % 30(@)(@@) % بدعوة يندك منها الجبل % % ودعوة غيث المنى ينهمل % % 31(@)(@@) % لأن له صم الحصى والجندل % % وانقادت الشم الأنوف الطول % % PageV01P1152 32(@)(@@) % فاسمع مقالا فاح منه المندل % % وفيه قد رق الصبا والشمأل % % 33(@)(@@) % وانكشف الأمر وهان المعضل % % لدى أناس ليس فيهم جدل % % PageV01P1153 البحر : - 1(@)(@@) % إذا كان كلي دائما يشبه البرقا % % فقل لي هنا من ذا يدوم ومن يبقى % % 2(@)(@@) % وما ذلك الباقي سوى الله وحده % % فما بال أقوامي يسمونني خلقا % % 3(@)(@@) % تجددت عن أمر قديم وإنني % % أنا الحادث الموهوم والشبح الملقى % % 4(@)(@@) % وعقلي وروحي للوجود مراتبأنا الشمس في وصف الكمال وما السوى سوى الظل فاستيقن عليه لي السبقا % % ونفسي وجسمي تصحب الجمع والفرقاسقط بيت ص % % 5(@)(@@) % وإن شئتني فاعرف جميع منازلي % % ردع 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms225# عنك مني الغرب واستقبل الشرقا % % 34(@)(@@) % وخذ بما قال الإمام الأفضل % % وخل عنك ما تقول العذل % % 35(@)(@@) % فإنهم لكل قلب علل % % ويكثر الخطا بهم والخطل % % 36(@)(@@) % وقولهم تقطع فيه السبل % % ويذهب الخير وتمضى الدول % % 37(@)(@@) % لأنهم على الفساد انجبلوا % % فحقهم أن يتركوا أو يهملوا % % PageV01P1154 البحر : - 1(@)(@@) % خلت الأكوان ممنهو في قلبي مقيم % % لا يغيبوبه نلت الكمال % % 2(@)(@@) % فانقلوا يا قوم عمنلي في ليلى نديم % % ذا الحبيبأنا منه كالظلال % % 3(@)(@@) % دور % % 4(@)(@@) % واحد لما تثنى هام فيه ذو الغرام % % والظنونتجعل الفرد الكثير % % 5(@)(@@) % نال منه ما تمنى عاشق البدر التمام % % والعيونكم لها فينا قتال % % 6(@)(@@) % دور % % 6(@)(@@) % ولا زالت الأرواح تسمو بهمتي % % وسر مجالي الغيب لازال بي يرقى % % 7(@)(@@) % لنا الحضرة الزلقى على أيمن الحمى % % وفي لجة الأسما لنا الدرة الفرقا % % 7(@)(@@) % ما على ذا الوجه حاجبوهو ظاهر لا سواه % % عندناجل من غير شبيه % % 8(@)(@@) % هي الذات عن ذات وعن ألف علت % % وتاء فلا تدري الحروف لها مرقى % % PageV01P1155 8(@)(@@) % فعلينا الموت واجبإنما الموت حياه % % مذ دنابجلال وجمال % % 9(@)(@@) % دور % % 9(@)(@@) % وقد قصرت عنها تراكيب فعلها % % واطلاقها يستوجب الفتق والرتقا % % 10(@)(@@) % هي الاسم وهي الوسم والرسم للورى % % فأيان ما وليت اشهدها تلقا % % 10(@)(@@) % لم يزل ربي يحييللنبي المصطفى % % والصحابكل وقت وزمان % % 11(@)(@@) % ما ورى عبد الغنيعن نبا أهل الوفا % % ذا الكتابوتهنى بالعيال % % 11(@)(@@) % هي الرفرف الأعلى هي المستوى الذي % % يحق له الدعوى هي العروة الوثقى % % 12(@)(@@) % هي الحسن وجها والجمال حقيقة % % فلا بدع إن ذاب الأنام بها عشقا % % 13(@)(@@) % إذا احتجبت متنا وعشنا إذا بدت % % وإن أفرطت في الهجر قلنا لها رفقا % % 14(@)(@@) % يهيم بها قلبي إذا هبت الصبا % % وأسكر شوقا كلما غنت الورقا % % PageV01P1156 15(@)(@@) % حجازية شامية ذات طلعة % % علت من رآها لا يضل ولا يشقى % % 16(@)(@@) % سجدنا إليها وهي راكعة لنا % % بميل مريد ناشق طيبنا نشقا % % PageV01P1157 البحر : - 1(@)(@@) % وجودي جل عن جسمي % % وعن روحي وعن عقلي % % 2(@)(@@) % وعن شرعي وتكليفي % % وعن حكمي وعن نقلي % % 3(@)(@@) % وأمري مطلق حتى % % عن الإطلاق يستعلي % % 4(@)(@@) % وعن ذات وعن وصف % % وعن بعض وعن كل % % 17(@)(@@) % ولاحب إلا حبها عند عاشق % % لها في سواها كذبه لم يزل صدقا % % 18(@)(@@) % وجود بها قامت مراتب ذاته % % لأسمائه بالأمر دافقة دفقا 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms226# % % 19(@)(@@) % تنزه نع تلك المراتب كلها % % فسحقا لعبد ليس يعرفه سحقا % % PageV01P1158 البحر : - 1(@)(@@) % ألا أيها النور الحقيقي % % على لمعانه مزقت زيقي % % 2(@)(@@) % وملت به أعربد عن طريقي % % فدع عنك الملامة يا رفيقي % % 3(@)(@@) % دور % % 4(@)(@@) % هو الحادي ترنم للمطايا % % وأظهر من جوانحها خبايا % % 5(@)(@@) % وعلمي ليس يدريه % % سوى من لم يزل مثلي % % 5(@)(@@) % وذكرها المباسم والثنايا % % وأسكرها بكاسات الرحيق % % 6(@)(@@) % ولو زال الخطا عن عل % % م أهل العقد والحل % 6(@)(@@) % دور % % 7(@)(@@) % سقى الله الشعاب شعاب نجد % % وإن كان التعلل ليس يجدي % % 7(@)(@@) % لا ضحى علمهم من بح % % ر على قطرة الطل % PageV01P1159 8(@)(@@) % وعلم الخضر في علمي % % وموسى رشحة البل % % 8(@)(@@) % فإني ذبت من شوقي ووجدي % % إلى الأحباب في وادي العقيق % % 9(@)(@@) % دور % % 9(@)(@@) % وإني هدهد الأخبا % % ر للقوم الأولى قبلي % % 10(@)(@@) % ومن قولي أنا أملي % % وإني فوق ما أملي % % 10(@)(@@) % عسى النسمات بالأخبار تاتي % % وتحييني بهم بعد الممات % % 11(@)(@@) % وأحظى من شذاهم بالهبات % % وأفرح في لقا ذاك الفريق % % 11(@)(@@) % على الله قيوم % % بلا شبه ولا مثل % % 12(@)(@@) % وإني ذلك القيو % % م لما قمت عن حملي % % 12(@)(@@) % دور % % PageV01P1160 13(@)(@@) % وقد جردت عن ملكي % % وعن علمي وعن جهلي % % 13(@)(@@) % وصلي الله ربي كل حين % % على خير الورى طه الأمين % % 14(@)(@@) % ومن عبد الغني علي اليقين % % بنصرته له في كل ضيق % % 14(@)(@@) % وعن كيفي وعن إيني % % وعن فوقي وعن سفلي % % 15(@)(@@) % وحقي زال عنه با % % طلي ذو المحق والمحل % % 16(@)(@@) % ووجهي قد غسلت الكو % % ن عنه أيما غسل % % 17(@)(@@) % وإني لست مخلوقا % % ولا شربي ولا أكلي % % 18(@)(@@) % ولا إني أنا الخلا % % ق ذو صنع وذو فعل % % PageV01P1161 البحر : - 1(@)(@@) % كل شيء لنا على التحقيق % % من عدو ومخالف وصديق % % 2(@)(@@) % ومضر ونافع وهو أما % % خادم حال وسعة أو ضيق % % 3(@)(@@) % حكم كلها جميع أموري % % وأمور الورى بحكم دقيق % % 4(@)(@@) % يا ابن ودي هي الشئون تجلت % % فتحلت بها صفات رفيقي % % 5(@)(@@) % تقتضي دورة الشقاء لقوم % % ولقوم سعادة التوفيق % % 6(@)(@@) % طبق ما يعلم الإله قديما % % نفسه في نفوس كل فريق % % 7(@)(@@) % حيرة بل هداية أنتجتها % % صبغة الغيب عند أهل الطريق % % 8(@)(@@) % فاعلمونا أو وفاجهلونا هنا لا % % جهل والكل علم حق حقيقي % % 9(@)(@@) % هو جمع وإن تفرق قومي % % فأنا لا أقول بالتفريق % % 10(@)(@@) % يا لأمر مقدس 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms227# غاب عنا % % يقذف الخلق من مكان سحيق % % PageV01P1162 11(@)(@@) % نتفانى به فتبقى % % منه نشتم طيب مسك فتيق % % 12(@)(@@) % قيدتنا التوجهات علينا % % منه كيف اقتضت بحكم طليق % % 13(@)(@@) % وهدانا إليه برق التجلي % % في دياجي إمكاننا بالبريق % % 14(@)(@@) % فشربنا هواه ممن وجدنا % % عنده بالدنان والإبريق % % 15(@)(@@) % وأقمنا على المحبة نلقى ال % % غير عنها بحفظ عهد وثيق % % 19(@)(@@) % ولا من أنبياء الل % % ه إني أو من الرسل % % 20(@)(@@) % وإني ما أنا عيسى % % ولا المهدي إلى السبل % % 21(@)(@@) % أنا حارت بي الألبا % % ب لا يدرون ما أصلي % % 22(@)(@@) % أنا الشامي أنا الهندي % % أنا الرومي أنا الصقلي % % 23(@)(@@) % أنا الأكوان بي قامت % % أنا الأفلاك من أجلي % % PageV01P1163 24(@)(@@) % أنا الأملاك تدري بي % % ومني ترتجي بذلي % % 25(@)(@@) % أنا المعروف في الدنيا % % وفي الأخرى بذي الفضل % % 26(@)(@@) % وإني لست إنسانا % % ولا من ذلك النسل % % 27(@)(@@) % ولا بالجن والأملا % % ك والحيوان فاعرف لي % % 28(@)(@@) % ولا من والد لي بل % % ولا أم ولا نجل % % 29(@)(@@) % ولا قومي أرى قومي % % ولا أهلي أرى أهلي % % 30(@)(@@) % وإني ما أنا شيخ % % ولا بالشاب والكهل % % 31(@)(@@) % ولا إني جنين أو % % بمولود ولا طفل % % 32(@)(@@) % وإني مطلق والكل % % في قيد وفي غل % % 33(@)(@@) % ولا يدري جنيد بال % % ذي عندي ولا الشبلي % % PageV01P1164 البحر : - 1(@)(@@) % كيف يا قوم يوصف المخلوق % % بوجود وأصله ممحوق % % 2(@)(@@) % عدم كله وقد قدرته % % أزلا قدرة عليه تحوق % % 3(@)(@@) % فهو شأن مقدر من قديم % % لم يكن للوجود فيه طريق % % 4(@)(@@) % ولقد جاءت النصوص بهذا % % في كتاب وسنة ذا مسوق % % 5(@)(@@) % وإذا كان هكذا الأمر قل لي % % كيف وصف الوجود فيه يليق % % 6(@)(@@) % والذي بالوجود يوصف ماذافإذا الخلق قيل نفس وجود لا بوصف الوجود ذا مرموق % أين يا عقل أنت والتحقيقسقط بيت ص % % 7(@)(@@) % قلت إن الوجود في كل شيء % % واحد كلهم به مطروق % % 8(@)(@@) % طبق ما قيل إنه هو جنس % % وهو للاشتراك فيه يسوق % % 9(@)(@@) % وليك الفرق ظاهرا بذوات % % وشخوص سوى الوجود تروق % % 10(@)(@@) % وإذا كانت الذوات وجودا % % وكذا الشخوص زالت فروق % % PageV01P1165 11(@)(@@) % وغدا الكل واحدا ومحال % % ذاك في العقل ليس فيه وثوق % % 12(@)(@@) % فافهموا يا عقول ذا القول وأدروا % % وادركوا ما ترونه واستفيقوا % % 34(@)(@@) % وما في عالمي غيري % % فخفض عنك يا خلي % % 35(@)(@@) % وما عبد الغني اسمي 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms228# % % وهذا مقتضى الشكل % % 36(@)(@@) % ولكن عالم الأوها % % م يمشي بي على مهل % % 37(@)(@@) % فيا من رام في الدنيا % % يراني طالبا وصلى % % 38(@)(@@) % تجرد وانتزع واخرج % % عن الأثواب والنعل % % 39(@)(@@) % وكن صرفا بلا مزج % % وكن روضا بلا بقل % % 40(@)(@@) % وكن خمرا بلا كأس % % وكن شمسا بلا ظل % % 41(@)(@@) % وحقق واقطع الأحبال % % وأمسك دونها حبلي % % PageV01P1166 42(@)(@@) % وصابر واصطبر واعلم % % فليس المسك كالزبل % % 43(@)(@@) % ولا حق اليقين الصر % % ف في الأقساط والعدل % % 44(@)(@@) % كعين أو كعلم لل % % يقين الصائب النبل % % 45(@)(@@) % وسد الباب من غيري % % وعالج وافتتح قفلي % % PageV01P1167 البحر : - 1(@)(@@) % له الغرب من أوج العلى ولنا الشرق % % وما بيننا في مقتضى ذاتنا فرق % % 2(@)(@@) % وهل باسم محيي الدين يمتاز في الورى % % وعبد الغنى إلا من الشجر العرق % % 3(@)(@@) % كلانا وجود واحد وهو ذات من % % لها أنني برق كما إنه برق % % 4(@)(@@) % وما النور إلا النار في نظر السوى % % وللنار إطفاء به ولها حرق % % 46(@)(@@) % صلاة الله من قلبي % % على قلبي بلا فصل % % 47(@)(@@) % على طه رسول الل % % ه نور الفرض والنفل % % 48(@)(@@) % مدى الأيام ماسح ال % % سحاب الجون بالهطل % % PageV01P1168 البحر : - 1(@)(@@) % هذه أثوابهم والحلل % % ليت شعري أين قومي نزلوا % % 2(@)(@@) % نزلوا بالشعب من كاظمة % % هي قلبي والحشى والمقل % % 3(@)(@@) % فانمحت من ذكرهم آثارنا % % وبدا ذاك الغرام الأول % % 4(@)(@@) % بربا نجد وقد ذاب الربا % % وانمحى نجد إذا ما أقبلوا % % 5(@)(@@) % هي الشمس من خلف الجدار تطلعت % % إذا سد خرق منه أظهرها خرق % % 6(@)(@@) % طرقت بها ما خصني من شئونها % % كما كان من تلك الشئون له طرق % % 7(@)(@@) % على سره منه الرضى وهو سرنا % % فمنا علينا ذاك ما غنت الورق % % PageV01P1169 البحر : - 1(@)(@@) % يا من تجلى حتى تملابه الفتى المشتاق % % 2(@)(@@) % ما ثم إلاوجه تجلى بزائد الإشراق % % 3(@)(@@) % كلي اضمحلافصرت ظلالقدرة الخلاق % % 4(@)(@@) % ما ملت كلاوالغير ضلاعن حالة العشاق % % 5(@)(@@) % دور % % 5(@)(@@) % ونسيم الروض لولاهم لما % % نقل الأخبار عمن ينقل % % 6(@)(@@) % يا برق واديربا جيادهيجت للركبان % % 6(@)(@@) % جيرة جاروا على أشواقنا % % وإذا جاروا فمن ذا يعدل % % 7(@)(@@) % شجى فؤاديغناء حادييسوق بالأظعان % % 7(@)(@@) % كل شمس إن رأتهم كسفت % % كل بدر من سناهم يأفل % % PageV01P1170 8(@)(@@) % بالله ناديوالليل هاديمن للشجي الولهان % % 8(@)(@@) % هذه طلعتهم في كوننا % % مالنا كون ولكن علل % % 9(@)(@@) % لبسونا أو لبسناهم فمن % % هو 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms229# منا اللابس المشتمل % % 10(@)(@@) % حالة يعرفها العارف قد % % غاب عن إدراكها من يعقل % % 11(@)(@@) % وبها عنها البرايا اشتغلت % % وعجيب فارغ مشتغل % % PageV01P1171 البحر : - 1(@)(@@) % مليح كلنا مظهر % % إلى وجهه الجميل % % 2(@)(@@) % وما يخفى به يظهر % % لأبناء السبيل % % 3(@)(@@) % دور % % 4(@)(@@) % سقاني كاسه الساقي % % على طيب اللحون % % 5(@)(@@) % فزادت منه أشواقي % % ولي صبر قليل % % 6(@)(@@) % دور % % 7(@)(@@) % ألا أيها الحادي % % رويدا بالحمول % % 9(@)(@@) % لقا سعاديأجل زادفي قسمة الأرزاق % % 10(@)(@@) % دور % % 11(@)(@@) % أوفى سلاميعلى التهامى من خص بالمعراج % % PageV01P1172 12(@)(@@) % مع الكرامأهل المقاموسائل الإنتاج % % 13(@)(@@) % آل عظامصحب مراميبهم فلا أحتاج % % 14(@)(@@) % وصرت ساميفي القدر شاميعبد الغني قد فاق % % PageV01P1173 البحر : - 1(@)(@@) % أهملوني من جهلهم بي وهذا % % وصف قومي ما بينهم متناسق % % 2(@)(@@) % وهو إهمال ربهم لهمو فل % % ستعيذوا بالله من شر غاسق % % 3(@)(@@) % وأنا ناظر لهم فكأني % % مصحف قد أقيم في بيت فاسق % % 8(@)(@@) % انخ في يمنة الوادي % % إلى كم ذا الرحيل % % 9(@)(@@) % دور % % 10(@)(@@) % بروق الحي قد لاحت % % على بعد المزار % % PageV01P1174 البحر : - 1(@)(@@) % أيا ساكنين الشرق قد شرقت بكم % % عيوني بدمع حين شامت سنا البرق % % 2(@)(@@) % فقوموا بعذري عندكم إن مبتدا % % غرامي بكم قد كان من أقرب الطرق % % 3(@)(@@) % وما ذاك إلا أنني كنت غافلا % % أظن جداري ليس يؤذن بالخرق % % 4(@)(@@) % فدت يد شرقية قادرية % % بها نشأتي خضراء طيبة العرق % % 5(@)(@@) % فقلت لأهل الغرب لا تعتبونني % % بكم إنني في الجمع من غير ما فرق % % 6(@)(@@) % صعدت بكم أوج العلى وترنمت % % بألحانكم في القلب ساجعة الورق % % 7(@)(@@) % ألا فاعذروا طرف المحب فإنه % % رأى البرق شرقيا فحن إلى الشرق % % 11(@)(@@) % وأزهار الربا فاحت % % بها يشفى العليل % % 12(@)(@@) % دور % % 13(@)(@@) % دعاني منيتي ليلا % % وقد زال الحجاب % % PageV01P1175 14(@)(@@) % وقلبي زاده ميلا % % له لما يميل % % 15(@)(@@) % دور % % 16(@)(@@) % صلاة الله مولانا % % على خير الأنام % % 17(@)(@@) % ومن الله أدنانا % % على نهج الخليل % % PageV01P1176 البحر : - 1(@)(@@) % أسقى نداماى من كاسي وأشرب ما % % أبقوه في الكاس لي من خمري الباقي % % 2(@)(@@) % فكنت آخرهم شربا وأولهم % % سكرا بما تركوا من بهجة الساقي % % 3(@)(@@) % بقية الله خير قال خالقنا % % فحققوا القول يا قومي وأرفاقي % % 4(@)(@@) % وهذه يد من أهواه وهي يدي % % بلمسها نال كلى عهد خلاقي % % 18(@)(@@) % دور % % 19(@)(@@) % له عبد الغني أهدى % % نظاما كالعقود % % 20(@)(@@) % مدى الأيام ما أهدى % % إلى الحق الدليل % % PageV01P1177 البحر : - 1(@)(@@) % يا قلب أحبانا 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms230# جسمي بهم بالي % % 2(@)(@@) % بغيرهم لا تبالي بل بهم بالي % % 3(@)(@@) % ويا كراما سواهم زال من بالي % % 4(@)(@@) % لا تحسبوا أنني عن حبكم سالي % % وحقكم لم يزل حالي بكم حالي % % 5(@)(@@) % لحسنكم لا أرى بين الورى شبها % % 5(@)(@@) % قولوا لمن قد أبى عن مجلسي ونبا % % من ذا يوقيك في العقبى من الواقي % % 6(@)(@@) % والعاذلون لقد زادوا بكم عمها % % 6(@)(@@) % هذا المدام وهذا الكاس ممتلئ % % من المدام إلى أطراف أطواقي % % 7(@)(@@) % ترقى وتسقط من أعلى مقامك فيعطشان يحمل ماء في إدواته وليس يدري به من سوء أخلاق % حضيض جهلك بي يا خيبة الراقيسقط بيت ص % % 8(@)(@@) % إن الكرام بحسن الظن قد شربوا % % وسوء ظنك حرمان لرقراق % % PageV01P1178 9(@)(@@) % لابد أن تغلق الباب الذي فتحت % % يد الإله فتبقى خارج الطاق % % PageV01P1179 البحر : - 1(@)(@@) % قطع الجهول زمانه بتغزل % % 2(@)(@@) % إن الجهول عن الجمال بمعزل % % 3(@)(@@) % أنا لا أميل إلى كلام العذل % % 4(@)(@@) % سهري لتنقيح العلوم ألذ لي % % من وصل غانية وطيب عناق % % 5(@)(@@) % إن كنت جئت لدى العدى بنقيصة % % 6(@)(@@) % فهي الكمال وذاك عن خصيصة % % 7(@)(@@) % رفقا بقلبي الذي فيكم قضى ولها % % 7(@)(@@) % طلبي لغالية يبذل رخيصة % % 8(@)(@@) % أرخصتمو في هواكم مدمعي سفها % % وهو العزيز الذي عهدي به غالي % % 8(@)(@@) % وتمايلي طربا بالحل عويصة % % في الذهن أبلغ من مدامة ساقي % % PageV01P1180 9(@)(@@) % من ذا الذي في معاني الفضل يعدلكم % % 9(@)(@@) % سم الجهالة زال من ترياقها % % 10(@)(@@) % وكل شيء من الأشياء فهو لكم % % 10(@)(@@) % وهو العلوم بمقتضى إشراقها % % 11(@)(@@) % حررتها في الطرس باستحقاقها % % 11(@)(@@) % ليس سمواتكم والأرض تشملكم % % 12(@)(@@) % وصرير أقلامي على أوراقها % % أشهى من الدوكاة والعشاق % % 12(@)(@@) % يا ساكنين فؤادي وهو منزلكم % % لا عشت يوما أراه منكمو خالي % % 13(@)(@@) % عنكم بدا الكون يزهو في لوائحه % % 13(@)(@@) % فانهض لتحصيل العلوم ووفها % % PageV01P1181 14(@)(@@) % حقا بأشرف حالة وأعفها % % 14(@)(@@) % والروض ينفح من ذاكي روائحه % % 15(@)(@@) % وحرمة العهد منكم في سوانحه % % 15(@)(@@) % أني كففت عن السوى بأكفها % % 16(@)(@@) % أنتم بقلبي أدنى من جوانحه % % حقا على رغم حسادي وعذالي % % 16(@)(@@) % وألذ من نقر الفتاة لدفها % % نقري لألقي الرمل عن أوراقي % % 17(@)(@@) % محبكم صادق في طيب مشربه % % 17(@)(@@) % تعلو على أوج المعالي همتي % % 18(@)(@@) % في نيل مقصودي وقرب أحبتي % % 18(@)(@@) % وأفق طلعتكم يزهو بكوكبه % % PageV01P1182 19(@)(@@) % وسر ثبيتت قلبي في تقلبه % % 19(@)(@@) % وأنا الذي عزمي 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms231# كسيف مصلت % % 20(@)(@@) % يا من يبالغ بالأماني رتبتي % % كم بين منسفل وآخر راقي % % 20(@)(@@) % ما يلتقى مثلكم مثلي يهيم به % % وكم يهيم بكم في الحي أمثالي % % 21(@)(@@) % بكاسنا كلما ذقنا رحيقكمو % % 21(@)(@@) % أصبحت موصوف العلى منعوتة % % 22(@)(@@) % لا أختشي من جانب تفويته % % 22(@)(@@) % ملنا سكارى فشاهدنا بريقكمو % % 23(@)(@@) % يا قاصرا فينا يحاول صيته % % 23(@)(@@) % أحبابنا ليت انقذتكم غريقكمو % % PageV01P1183 24(@)(@@) % أأبيت سهران الدجى وتبيته % % نوما وتبغى بعد ذاك لحاقي % % 24(@)(@@) % أوضحتمو لمحبيكم طريقكمو % % حاشاكمو تهجروني بعد إيصالي % % 25(@)(@@) % إلى اللقا بعثتني كل باعثه % % 26(@)(@@) % لجملتي بحجاب العز وارثة % % 27(@)(@@) % وليلة الفوز منكم في محادثة % % 28(@)(@@) % وحدت حبكمو عن كل حادثة % % وصنته عن دواعي القيل والقال % % 29(@)(@@) % روض الجمال بأزهار الجلال هنى % % 30(@)(@@) % في كل وجه لكم بين الورى حسن % % PageV01P1184 البحر : - 1(@)(@@) % نحن في وادي وغيب الغيب في وادي عميق % % والذي يدخل وادي الغيب منه لا يفيق % % 2(@)(@@) % إنه الوادي الذي كلم موسى ربه % % فيه والتقديس منه بان في أهل الطريق % % 3(@)(@@) % وانطواء الكون فيه أنه وادي طوى % % كل من يسلك فيه فهو من خير فريق % % 31(@)(@@) % والله مذ جئتكم بالفقر رحت غنى % % 32(@)(@@) % وما حدا باسمكم حاد فأطربني % % إلا وجدت له بالروح والمال % % PageV01P1185 البحر : - 1(@)(@@) % خذ الروح عني فاتحا منك دنها % % 2(@)(@@) % وحول عن الصرف السلافة كنها % % 3(@)(@@) % فإن لم تكن أهلا ولا كنت ذا نهى % % 4(@)(@@) % تأمل سطور الكائنات فإنها % % من الملأ الأعلى إليك رسائل % % 4(@)(@@) % قف معي يا ابن مقامي ههنا دون الحمى % % وتيامن وتياسر واشهد البيت العتيق % % 5(@)(@@) % بحار المعاني ليس تدرك شطها % % 5(@)(@@) % إن أنوار سليمى ليس تختفي في الورى % % إنما المزكوم لا يعرف ما المسك الفتيق % % 6(@)(@@) % هذه لا هذه من يفهم المعنى الذي % % عندنا ينجو من البحر الذي فيه غريق % % 7(@)(@@) % لا تلم مثلي على كشف الغطا كشف الغطاسرت نسمة أم تلك لمعة بارق أم الغيب مدت منه أيدي الرقائقبدا فاختفت آثار كل حقيقة لهذا نكني عنه سر الحقائقهو النور إلا أنه هو ظلمة وضدان أمر مستحيل لذائقهو الحرف في غيب الغيو % % إن مثلي إن مثلي صاحب العهد الوثيقسقط أبيات ص % % PageV01P1186 البحر : - 1(@)(@@) % شعورك والإدراك فعل الذي خلق % % وقد خلق الإنسان أي أنت من علق % % 2(@)(@@) % فكن 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms232# فعله كن لا تكن شاعرا ولا % % بشيء من الأشياء وارفع به القلق % % 3(@)(@@) % وفق من خمار النفس وابق به له % % تصر صاحيا صحو شديدا على طلق % % 4(@)(@@) % وتنكشف الأشياء عندك كلها % % ويشرق سر الله كالصبح والفلق % % 6(@)(@@) % وحم فوقها بالسبح إن كنت بطها % % 7(@)(@@) % وإياك رفع الكائنات وحطها % % 8(@)(@@) % لقد خط فيها لو تأملت خطها % % إلا كل شيء ما خلال الله باطل % % PageV01P1187 البحر : - 1(@)(@@) % إن قولي مؤبد بالنقول % % وبما تقتضيه كل العقول % % 2(@)(@@) % عند من يعرف اصطلاحي ويدري % % شرح حالي بقصدي المقبول % % 3(@)(@@) % لست ممن يقول عن كل شيء % % إنه الله قول كل جهول % % 4(@)(@@) % قصده يدرأ التكاليف عنه % % مستبيحا أحكام شرع الرسول % % 5(@)(@@) % وتكسف شمس الروح منك فتختفي % % ويخسف بدر النفس من غير ما ملق % % 6(@)(@@) % ويبقى ولا تبقى إلهك وحده % % له الخلق والأمر الجميع به انفلق % % 7(@)(@@) % هناك للإلهام وحي محقق % % فسبحان من للحب قل والنوى فلق % % PageV01P1188 البحر : - 1(@)(@@) % يا صاحبي في الرخا وفي الضيق % % دم حافظا لي على المواثيق % % 2(@)(@@) % هذي يدي قد مددتها لك خذ % % عهدي سريعا بغير تعويق % % 3(@)(@@) % وجود مثلي وجود تقدير % % وليس هذا وجود تحقيق % % 4(@)(@@) % وهكذا الحادثات أجمعها % % من حين تغريبها لتشريق % % 5(@)(@@) % تصورت كلها لنا صورا % % في الحس والعقل للتزاويق % % 5(@)(@@) % إنني منه كل حين بريء % % بل أنا العبد طالب للقبول % % 6(@)(@@) % وكل هذا له وليس لنا % % شيء من الأمر حكم تحليق % % 6(@)(@@) % وإذا قلت ذاك كان مرادي % % صانع الشيء فاعل المفعول % % 7(@)(@@) % حيث لا شيء جامد هو عندي % % بل كبرق يلوح بين الطلول % % 7(@)(@@) % أما وجود الإله خالقنا % % فهو الحقيقي لأهل توفيق % % PageV01P1189 8(@)(@@) % والذي عنه ذلك الشيء يبدو % % هو رب الفروع رب الأصول % % 8(@)(@@) % وجود حق محقق أبدا % % يعرف لكن بمحض تصديق % % 9(@)(@@) % عن دركه العقل عاجز وكذا % % عن وصفه في مقام تفريق % % 9(@)(@@) % مثل قول الخليل وقت التجلي % % إن هذا ربي بصدق المقول % % 10(@)(@@) % وهو نجم بدا وبدر وشمس % % ثم كان امتيازه بالأفول % % 10(@)(@@) % نراه لكن برؤية حدثت % % لنا غدا لا بوهم تحديق % % 11(@)(@@) % نغيب عنا وعن سواه إذا % % نحن رأيناه حال تشويق % % 11(@)(@@) % أخذ الجاهلون أقوال مثلي % % ثم قالوا بها على المجهول % % 12(@)(@@) % محبة منه والمحب بها % % يكاد منها 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms233# يغص بالريق % % 12(@)(@@) % لم يذوقوا منها الذي نحن ذقنا % % لا ولم يعرفوا حقيق النزول % % PageV01P1190 13(@)(@@) % هذا اعتقاد الهداة سادتنا % % لا عقد غاو غوى وزنديق % % 13(@)(@@) % إنما قلدوا بحفظ كلام % % وادعاء له بغير حصول % % 14(@)(@@) % كم أعرض السامري عنه وكم % % أباه في الدين كل بطريق % % 14(@)(@@) % وقصاراهم التخيل فهما % % وهو فيهم من غاية المأمول % % 15(@)(@@) % هم عوام لا يعملون وهذا % % هو سر أعيا جميع الفحول % % 15(@)(@@) % تعلقوا كلهم بما عبدوا % % من خلقه فيه أي تعليق % % 16(@)(@@) % حاولته الفحول أن يدركوه % % فأبى من حجابه المسدول % % 16(@)(@@) % وأعرضوا عن سنا عبادته % % جل فنالوا ظلام تحريق % % 17(@)(@@) % وأصبحوا مالهم لديه سوى % % لعنتهم عنه ضمن تسحيق % % 17(@)(@@) % فأزالوا نفوسهم وأتوه % % بافتقار ونائل مبذول % % PageV01P1191 18(@)(@@) % وسعوا نحوه به وأقاموا % % حكمه تاركين قول العذول % % 19(@)(@@) % فتجلى لهم فأفنى هواهم % % ثم أفنى منهم شخوص النحول % % 20(@)(@@) % طحنتهم منه الرحى حين دارت % % ثم جاءت بهم مجيئ السيول % % 21(@)(@@) % وعليهم تكرر الأمر حتى % % وقعوا في اللقا وأمر مهول % % PageV01P1192 البحر : - 1(@)(@@) % شف ثوب الكائنات % % عن وجود الحق % % 2(@)(@@) % فوجود الحق ذات % % من وراء الخلق % % 3(@)(@@) % فانزعوا الثوب الرفات % % قبل أن ينشق % % 4(@)(@@) % واشربوا ماء الحيات % % إنه قد رق % % 5(@)(@@) % دور % % 6(@)(@@) % حسبت كل العقول % % معه ثاني % % 7(@)(@@) % بتآويل النقول % % دون إيمان % % 8(@)(@@) % وعليها وهم غول % % فهم شيطاني % % 9(@)(@@) % فاثبتوا إن الثبات % % كاشف ما دق % % 10(@)(@@) % دور % % PageV01P1193 11(@)(@@) % كل من رام الشهود % % يرفع الإلباس % % 22(@)(@@) % فهم الفعل منه في كل حال % % وهم الغائبون غيبة غول % % 23(@)(@@) % لهم الاسم فيه من دون رسم % % عن عيان محقق ووصول % % 24(@)(@@) % وعليهم شواهد الصدق لاحت % % ليس تخفى إلا على المخذول % % 25(@)(@@) % هذه أعين إليه صحاح % % انفت من نواظر عنه حول % % 26(@)(@@) % أين منها مقال أهل اتحاد % % بدعاوي الفنا وأهل حلول % % 27(@)(@@) % اعقل الأمر تارك الشرع أعمى % % عن طريق الهدى وتحصيل رسول % % 28(@)(@@) % فهو إن كان مؤمنا فاسق أو % % جاحدا فهو كافر ذو فضول % % 29(@)(@@) % كيف يرقى مالم يتب من خطاه % % محكما قتل حبله المحلول % % 30(@)(@@) % ذاك هيهات لا يكون وإن قد % % كان وقع النصول فوق النصول % % PageV01P1194 31(@)(@@) % أين فهم الشمول والشرب منها % % بافتكار وأين ذوق الشمول % % PageV01P1195 البحر : - 1(@)(@@) % العبد يلهو ويغفل % % والرب أعلى وأسفل % % 2(@)(@@) % بكل شيء محيط % % ويح الذي عنه أجفل % % 3(@)(@@) % فانظر إليه 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms234# تجده % % بكل شيء تكفل % % 4(@)(@@) % وفي الجهات البواقي % % تشيطنت أم زنفل % % 5(@)(@@) % وساعدتها طباع % % على الجهول المغفل % % 6(@)(@@) % فكلما رام يرقى % % ألهته حتى تسفل % % 7(@)(@@) % ما فاز بالقرب إلا % % لربه من تنفل % % 8(@)(@@) % حتى له صار سمعا % % وناظرا ليس يغفل % % 9(@)(@@) % وقابل الباب فتحا % % من بعد ما كان مقفل % % 12(@)(@@) % تاركا دعوى الوجود % % زائل الإحساس % % PageV01P1196 13(@)(@@) % حافظا شرع الحدود % % ما له وسواس % % 14(@)(@@) % والذي فيه التفات % % بالسوى ملحق % % 15(@)(@@) % دور % % 16(@)(@@) % وعلى طه السني % % صلوات غر % 17(@)(@@) % وعلى آل عني % % ثم صحب طر % 18(@)(@@) % ما شدا عبد الغني % % بنظام الدر % 19(@)(@@) % وحباه بالهبات % % ربه المطلق % % PageV01P1197 البحر : - 1(@)(@@) % يا من يريد يحي الله بالتحقيق % % عقلك مصور وقانع أنت بالتخليق % % 2(@)(@@) % والله في الغيب مطلق ماله تضييق % % وكل ممنوع نحوه العقل ذو تشويق % % 10(@)(@@) % له من الحق جند % % يوليه نصرا وجحفل % % PageV01P1198 البحر : - 1(@)(@@) % حقيقتي حضرة التجلي % % ومظهر الغيب بالتخلي % % PageV01P1199 البحر : - 1(@)(@@) % كل قول على العقول يشق % % ليس جمعا وإنما هو فرق % % 2(@)(@@) % والقاب والقوس في التداني % % وزينة الله في التجلي % % 2(@)(@@) % والذي من ورا العقول فجمع % % هو بالقلب ليس يبديه نطق % % 3(@)(@@) % ظهرت عنه به لديه % % وقلت يا صاحبي وخلي % % 3(@)(@@) % وحدة أطلقت عليه تعالى % % في ثلاث من الكلام تدق % % 4(@)(@@) % وفيه أطلقت بعد حبسي % % وفك قيدي به وغلي % % 4(@)(@@) % هو حق وباطل ما سواه % % من جميع الأكوان غرب وشرق % % 5(@)(@@) % إرادة للخصوص أعطت % % وقدرة أعطت التدلي % % 5(@)(@@) % ووجود غيره عدم لا % % يقتضي غير ذا ولا يستحق % % 6(@)(@@) % وعن بواقي الصفات مدت % % حقيقتي كامتداد ظلي % % PageV01P1200 6(@)(@@) % وهو نور بدت به ظلمات % % هن سحق جميعهن ومحق % % 7(@)(@@) % إذا بدا نوره فماذا % % وإن خفي نوره فمن لي % % 7(@)(@@) % هكذا عنه في الكتاب يكنى % % وبهذا لعارف الله سبق % % 8(@)(@@) % إن يشأ عنه قال وحدة حق % % أو يشأ وحدة الوجود تحق % % 8(@)(@@) % إن لم يكن وابل فمنه % % قنعت يوم اللقا بطل % % 9(@)(@@) % أو يشأ قال وحدة النور عنه % % كلمات ما هن للدين خرق % % 9(@)(@@) % يا ويح صب عليه مضنى % % يذوب في مشهد التملي % % 10(@)(@@) % سرى جلدب إليه بال % % وجلد فيه مضمحل % % 10(@)(@@) % وحدة الحق حققت كل شيء % % فجميع الأشياء بالحق حق % % 11(@)(@@) % رآه في كل ما رآه % % فلم يقل بعده لعلي % % PageV01P1201 11(@)(@@) % وكذا وحدة الوجود 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms235# بها قد % % وجد الكل فهي للكل حق % % 12(@)(@@) % له رامغ بمن تجلى % % به وما عنده تسلى % % 12(@)(@@) % وسعت قال رحمتي كل شيء % % فتأمل ماذا يقول المحق % % 13(@)(@@) % بشعب وادي النقا غزال % % نفوره كان أصل ذلي % % 13(@)(@@) % وحدة النور للجميع أنارت % % فجميع الأشياء بالنور صدق % % 14(@)(@@) % وغصن انب سبى فؤادي % % بلين عطف وحسن دل % % 14(@)(@@) % هذه هذه الثلاثة أمر % % واحد وهو بالتقادير برق % % 15(@)(@@) % يا قمرا طالعا علينا % % بوجهه المشرق المطل % % 15(@)(@@) % قدرا قل مقدرا أمره كا % % ن كما قال والعوالم رق % % 16(@)(@@) % وظلمة الكون قد تولت % % والسر في ذلك التولي % % PageV01P1202 البحر : - 1(@)(@@) % وجود حقيقي هو الغيب مطلق % % به الكل موجود يلوح فيشرق % % 2(@)(@@) % وهم عدم الانتساب يريكهم % % وجودا فحقق ما ترى يا محقق % % 3(@)(@@) % ودع عنك هذا الالتباس فإنه % % على كل عقل حاكم ليس يرفق % % 4(@)(@@) % فيظهر معدومات كل مقدر % % من الغيب موجودات حس فتحرق % % 5(@)(@@) % وما ذلكم إلا مجرد نسبة % % إليه تعالى كل ما الله يخلق % % 6(@)(@@) % فميز وجود الحق من عدم السوى % % تكن رجلا عند الورى بك يوثق % % 7(@)(@@) % وسدد وقارب واتكل واصطبر وكن % % بغير وجود عند نفسك تصدق % % 17(@)(@@) % نحن تقاديره قديما % % من كل بعض وكل كل % % 18(@)(@@) % وقد تجلى بنا فصرنا % % كبائن عنه مستقل % % 19(@)(@@) % وهو الذي لم يزل على ما % % عليه من قبل ذا التجلي % % PageV01P1203 20(@)(@@) % ونحن أيضا كما ذكرنا % % هنا على حالنا المولى % % 21(@)(@@) % ولكن الزيغ في قلزوب % % وفي عيون من المضل % % 22(@)(@@) % يريك غير الذي تراه % % وأنت كالساعد الأمثل % % 23(@)(@@) % فنزه الرب عن زمان % % وعن مكان وعن محل % % PageV01P1204 البحر : - 1(@)(@@) % ظهرت لي يا غيب يا مطلق % % بالروح روح الأمر بي تشرق % % 2(@)(@@) % والروح روح واحد كلنا % % أرواحنا منه لنا تسبق % % 3(@)(@@) % لسانه العقل إذا رام أن % % ينطق به في نفسه ينطق % % 4(@)(@@) % كلامنا نحن وكل الورى % % في نفسه ربي له يخلق % % 5(@)(@@) % طبيعة بالروح تبدو كما % % تخفى فلا غرب ولا مشرق % % 6(@)(@@) % بحر هو الروح وأمواجه % % جميع ما يسكن أو يخفق % % 7(@)(@@) % مثل معانيك التي أنت في % % نفسك تعنيها إذا تحدق % % 8(@)(@@) % والكل خلق الله لاحت لهم % % في كل شيء آية تبرق % % 9(@)(@@) % يا مالكي روحك روحي كما % % قلت نفخت الروح إذ حققوا % % 24(@)(@@) % وعن معاني 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms236# العقول طرا % % من كل معنى به مخل % % PageV01P1205 25(@)(@@) % وكل ما أدركت حواس % % فعنه في المنزه الأجل % % 26(@)(@@) % وكن به طاهرا نظيفا % % إن قمت يا أيها المصلي % % 27(@)(@@) % واركع له عن سواه واسجد % % إليه في حضرة التعلي % % 28(@)(@@) % ودم على الصدق في الترجي % % واشفق على قدرك الأقل % % 29(@)(@@) % ولا تحل عنه وانتظره % % غير سؤوم ولا ممل % % 30(@)(@@) % فإن وجود الكريم باق % % بكل غيث له مهمل % % 31(@)(@@) % وبابه ماله انغلاق % % عمن إليه أتى بذل % % PageV01P1206 البحر : - 1(@)(@@) % نفسي على نفسي الوجود بها نزل % % فرضا وتقديرا ترتب في الأزل % % 2(@)(@@) % فتلبست نفس الوجود بغيرها % % وتقيد الإطلاق منها وانعزل % % 3(@)(@@) % وهو الذي هو لم يزل في غيبه % % وأنا الذي هو في انعدام لم أزل % % 4(@)(@@) % وكذاك حكم الكائنات جميعها % % فدع العنايا من تريض واعتزل % % 5(@)(@@) % واعلم بأنك أنت تقدير الذي % % هو ناسج لك بالمشيئة ما غزل % % 6(@)(@@) % والحضرتان له هل فحضرة ذاته % % محض والوجود وصفة نظم الغزل % % 7(@)(@@) % وهي الصفات جميعنا آثارها % % من جد فهو بها بجد ومن هزل % % 8(@)(@@) % وإذا تعرض خاطر لك فاسد % % فارجع إلى التقدير إن العقل زل % % 9(@)(@@) % وإذا الوجود الحق أعرض عنك قل % % نفسي على نفسي الوجود بها نزل % % 10(@)(@@) % بيني وما بينك هذا فإن % % خفيت فيه فأنا الأسبق % % PageV01P1207 11(@)(@@) % والغيب أنت الغيب حق ولا % % نقدر أن ندنو ولا نحلق % % 12(@)(@@) % وإنما نعرفه بالذي % % صوره الروح لنا المطلق % % 13(@)(@@) % معرفة من روحنا مثلنا % % مخلوقة دون الذي يخلق % % 14(@)(@@) % والروح هذا ملك واحد % % بملء ملك الله يستوثق % % 15(@)(@@) % أحب مولاه ولا يستطع % % إدراكه وهو له يعشق % % 16(@)(@@) % حيران فيه فتراه لنا % % مصورا فهو بنا يرمق % % 17(@)(@@) % هذا طريق واسع والسوى % % ذاك طريق أعوج ضيق % % PageV01P1208 البحر : - 1(@)(@@) % ساقي يا ساقياسقيني من خمره الباقيواكشف لي عن قيد اطلاقي % % PageV01P1209 البحر : - 1(@)(@@) % بنورك أيها الوجه الجميل % % ظهرنا كلنا جيل فجيل % % 2(@)(@@) % يا ساقي آه يا ساقي % % 2(@)(@@) % وبان الحق واتضح السبيل % % وإنك حسبنا نعم الوكيل % % 3(@)(@@) % دور % % 3(@)(@@) % دور % % 4(@)(@@) % هي الأكوان أجمعها براقع % % على الأوهام منها الأمر واقع % % 4(@)(@@) % محبوبي ظاهريتجلى بالوجه الباهرللعشاق في حكمه قاهر % % 5(@)(@@) % ولكن دون هذا السم ناقع % % وأنت العذب فيه السلسبيل % % 5(@)(@@) % يا ساقي آه يا ساقي % % 6(@)(@@) % دور % % PageV01P1210 6(@)(@@) % دور % % 7(@)(@@) % أستاره راحتعن عيني والزهره 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms237# فاحتوالسكره بالأسرار باحت % % 7(@)(@@) % سقى الله العقيق وشعب رامه % % وخصص بالصلاة وبالسلامة % % 8(@)(@@) % يا ساقي آه يا ساقي % % 8(@)(@@) % نبي الحق أرسل من تهامه % % به عبد الغني هو النزيل % % 9(@)(@@) % دور % % PageV01P1211 البحر : - 1(@)(@@) % إن قلت أن الوجود نفس % % الموجود يا أشعري فقل لي % % 2(@)(@@) % كذاك إن الموجود نفس % % الموجود عكس بلا مخل % 3(@)(@@) % وقلت نإ الوجود جنس % % والجنس تميزه بفصل % % 4(@)(@@) % والفصل نفس الوجود أيضا % % فالكل جنس مثلا بمثل % % 5(@)(@@) % فأين فصل الوجود ياذا % % بمقتضى عملك إلا جل % 6(@)(@@) % فإن تقل فصله اعتبار % % في العقل مثل اعتبار ظل % 7(@)(@@) % قلنا لك الاعتبار أمر % % له ثبوت في كل عقل % % 8(@)(@@) % وعنه شيء يقال وهو % % الموجود فارجع لحكم كل % % 9(@)(@@) % وإن تقل إن كل شيء % % وجوده حكم مستقل % % 10(@)(@@) % اكشف لي عنكفي ذاتي وافتح لي دنكواجعلني يا حبي أنك % % PageV01P1212 10(@)(@@) % مميز عن سواه ذاتا % % فليس فيه اشتراك جعل % % 11(@)(@@) % يا ساقي آه يا ساقي % % 11(@)(@@) % تقول لا جنس فالوجود % % المراد جزئي ولس كلي % % 12(@)(@@) % خلاف ما حرروا وقالوا % % في حكم قانون علم شكل % % 12(@)(@@) % افتح باب الحانواسمعني من طيب الألحانوأرشفني من كاسي الملئان % % 13(@)(@@) % يا ساقي آه يا ساقي % % 13(@)(@@) % أو قلت إن الوجود غير % % الموجود والغير غير أصل % % 14(@)(@@) % دور % % 14(@)(@@) % طرا على الشيء وهو لا شي % % ء صار نعتاله له يجلى % % 15(@)(@@) % بمن ترى النعت قائم % % والمنعوت لاشيء فاستمع لي % % PageV01P1213 15(@)(@@) % في دور الكاساتقد غابت إخواني الساداتوالخمار محمود العادات % % 16(@)(@@) % وهل تقوم النعوت يوما % % بغير أشيا ولا محل % 16(@)(@@) % يا ساقي آه يا ساقي % % 17(@)(@@) % دور % % 17(@)(@@) % هذا سؤال على عقول % % أتى بعلم ونفى جهل % % 18(@)(@@) % من يشرب يسكرمن خمري لما يتفكروالمغرور في علمه أنكر % % 18(@)(@@) % فإن تكن عالما فحقق % % جوانبا يا أجل خل % 19(@)(@@) % يا ساقي آه يا ساقي % % 20(@)(@@) % دور % % 21(@)(@@) % العالم فانيوالموجود ماله من ثانيلا يدري غير الرباني % % PageV01P1214 22(@)(@@) % يا ساقي آه يا ساقي % % 23(@)(@@) % دور % % 24(@)(@@) % يا دائم يا هوإن الكل في أمرك تاهواوالمضنى حبك أفناه % % 25(@)(@@) % يا ساقي آه يا ساقي % % 26(@)(@@) % دور % % 27(@)(@@) % لا يعرف أمريإلا من يشرب من خمريأحشاؤه تصلى في جمري % % PageV01P1215 البحر : - 1(@)(@@) % نور تلفف بالظلام مكمل % % نودي هنا يا أيها المزمل % % 2(@)(@@) % قم فيه وهو النيل أي بأموره % % طبق الإرادة ما علا والأسفل 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms238# % % 3(@)(@@) % ذرني ومن فيه خلقت من الورى % % فيه وحيدا مستقلا يفعل % % 4(@)(@@) % واغلظ عليهم قال أي بنفوسهم % % وهو الرؤوف بنا الرحيم المفضل % % 5(@)(@@) % وهو العزيز عليه ما عنت السوى % % وهو الحريص على الجميع ليكملوا % % 6(@)(@@) % بحروهم أمواجه وهو الذي % % بالحق قام كصورة تتخيل % % 7(@)(@@) % وافهم إشارة قوله وقد جاءكم % % من عين أنفسكم إليكم مرسل % % 8(@)(@@) % تجد الذي بالروح عنه وبالحجى % % كنى الإله وما درى من يجهل % % 9(@)(@@) % وهو الحقيقة والشريعة والهدى % % لمن اهتدى وهو الحبيب المقتل % % 10(@)(@@) % والسنة الغراء فيه طريقنا % % ويد الجماعة والكتاب المنزل % % PageV01P1216 11(@)(@@) % طورا يغيب ونحن نظهر عنه في % % هذا الزمان لنا المقام الأفضل % % 12(@)(@@) % ونغيب نحن به ويظهر تارة % % هو قائم عنا بنا يتمثل % % 13(@)(@@) % ووارء هذا في الغيوب حقيقة % % تطوى الحقائق كلها لا تعقل % % 14(@)(@@) % قد أجملت نور النبي وفصلت % % وتظل تجمل للورى وتفصل % % 15(@)(@@) % وهي الوجود وما سواها هالك % % ويقال موجود يلوح ويأفل % % 16(@)(@@) % نور على نور وللثاني أتى % % أوفى الصلاة بها يجود الأول % % 17(@)(@@) % طول المدى ما هب ريح الروح في % % روض الجسوم وما تغنى البلبل % % 28(@)(@@) % يا ساقي آه يا ساقي % % 29(@)(@@) % دور % % 30(@)(@@) % كفوا يا عذالصبري في حبيه قد زاليغزوني بالجفن الغزال % % PageV01P1217 31(@)(@@) % يا ساقي آه يا ساقي % % 32(@)(@@) % دور % % 33(@)(@@) % معروف الأوصافيعمل لي أنواع الألطافقلبي في كعبة ذاته طاف % % 34(@)(@@) % يا ساقي آه يا ساقي % % 35(@)(@@) % دور % % 36(@)(@@) % ذا قول قدسيمن عبد الغني النابلسيللسالك في هذا الجنس % % 37(@)(@@) % يا ساقي آه يا ساقي % % 38(@)(@@) % دور % % 39(@)(@@) % يا ربي صليعلى الهادي نور المتجليمع آل والصحب الكل % % 40(@)(@@) % يا ساقي آه يا ساقي % % PageV01P1218 41(@)(@@) % دور % % 42(@)(@@) % ما غنى الحاديللركب المكي الغاديأو لاحت أنوار الوادي % % 43(@)(@@) % يا ساقي آه يا ساقي % % PageV01P1219 البحر : - 1(@)(@@) % في الكون للحق أمثال بها نطقا % % مضروبة منه للعبد الذي صدقا % % PageV01P1220 البحر : - 1(@)(@@) % كل ما يخلقه العقل أمل % % والذي يخلقه الله عمل % % 2(@)(@@) % فقال تلك هي الأمثال نضربها % % للناس يعقلها من الكمال رقى % % 2(@)(@@) % فاعرفوا لفرقا الذي بينهما % % تجدوه البدر في الشم أكتمل % % 3(@)(@@) % وأغفل الله عنها من يشاهدهم % % أهل السعادة في الدنيا وأهل شقا % % 3(@)(@@) % وانتساب الخلق للعقل كما % % قال عيسى وعلى الأذن حمل % % 4(@)(@@) % فمؤمن هو ناج دون معرفة % % إيمانه النور كالبرق الذي برقا % % 4(@)(@@) % هذه الحضرة 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms239# لا يدخلها % % غير من فصلها ثم انجمل % % 5(@)(@@) % وجاهل ليس يدري ما يقال له % % تكذيبه رزقه ذاك الذي رزقا % % 5(@)(@@) % نظرات بعيون كثرت % % دمعها الطوفان في الكون همل % % 6(@)(@@) % كن مسلما مؤمنا بالحق تعرفه % % أو لست تعرفه واتبع لأهل تقى % % PageV01P1221 6(@)(@@) % وابتداء الأمر أن تشهده % % واحدا في الكل طير أو جمل % % 7(@)(@@) % ثم لا طير ولا شيء هنا % % شمس أبراج كحوت وحمل % % 7(@)(@@) % وإن ترد تعرف الله الذي ظهرت % % آياته فاتبع الأصحاب والرفقا % % 8(@)(@@) % هو هذا فاقلب العين وما % % هو هذا وعلى هذا اشتمل % % 8(@)(@@) % وهمأولو العلم علم الله سادتنا % % وكن بهم مؤمنا تلحق بمن سبقا % % 9(@)(@@) % وانظر إلى الوقت وقت الفجر ليس له % % علامة غير نور يملأ الأفقا % % 9(@)(@@) % جمل كل التفاصيل له % % فتحقق والتفاصيل جمل % % 10(@)(@@) % ونوره غيره والوقت يحضر إن % % أبدى له الله ذاك النور والشفقا % % 10(@)(@@) % يا نديمي لك متى قدر ما % % أنت فيه كلما العقل احتمل % % 11(@)(@@) % والوقت طلق بلا قيد يقيده % % في نفسه فاعتبره واشهد الفلقا % % PageV01P1222 11(@)(@@) % فافتح الباب وخذ ميمنة % % في طريقي فيه من يمشي رمل % % 12(@)(@@) % واشهد علامته تشهده حيث بدا % % والله غيب ومشهود بمن خلقا % % 12(@)(@@) % والمعاني كلها قاصرة % % عنه والجرح عليه ما اندمل % % 13(@)(@@) % والوقت في كل أرض حاضر فخذوا % % منه اعتبار الوجود الحق منطلقا % % 13(@)(@@) % غير أن العشق يلقى تارة % % بك لليأس وطورا للأمل % % 14(@)(@@) % ونزهوه وقولوا عنه خالقنا % % ما إن له غيبة فاليوم يوم لقا % % 14(@)(@@) % وله دح فمن جاوزه % % عكس الأمر وقد مال ومل % 15(@)(@@) % والله عنه جميع الكون منتشر % % كالضوء يبدو عن الضوء الذي انفتقا % % PageV01P1223 البحر : - 1(@)(@@) % سنة نبي مختار % % فيها قيام الليل % % 2(@)(@@) % طالت بها الأعمار % % تعطي القوى والحيل % % 3(@)(@@) % حوزوا بها أنوار % % وأحوو المنى والنيل % % 4(@)(@@) % صلوها يا أبرار % % عنكم يزول الويل % % 5(@)(@@) % دور % % 6(@)(@@) % قد صدق الصديق % % فيها أبو بكر % % 7(@)(@@) % واختص بالتحقيق % % حقا بلا نكر % % 8(@)(@@) % عنه الرضى توفيق % % من أفضل الذكر % % 9(@)(@@) % فارضوا بلقب شيق % % فيه إليه ميل % % 10(@)(@@) % دور % % PageV01P1224 11(@)(@@) % أحيي لها الفاروق % % نجل الفتى الخطاب % % 12(@)(@@) % من قدره العيوق % % في زمرة الاصحاب % % 13(@)(@@) % عنه الرضى منطوق % % للسادة الأحباب % % 14(@)(@@) % فارضوا فعنه النوق % % ترضى وتمشى سيل % % 16(@)(@@) % تبارك الله لا شيء يشابهه % % فالحسن والعقل في تنزيهه 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms240# اتفقا % % 17(@)(@@) % والله قد ضرب الأكوان أمثلة % % بالفعل لا نحن فاترك عنك ذا السلقا % % 18(@)(@@) % ونحن نعقلها لا نحن نضربها % % فنودع الطرس ما ندريه والورقا % % 19(@)(@@) % وإن ترد أوضح الأمثال أجمعها % % فانظر إلى صفحة المرءآة مستبقا % % 20(@)(@@) % من الزجاج أو الفولاذ ليس بها % % شيء وفيه يلوح الشيء متسقا % % 21(@)(@@) % ولا ترى جرم مرآة بك استترت % % وبالجميع فلا تتعب به الحدقا % % PageV01P1225 22(@)(@@) % كما تلوح لك الأكوان تظهر في % % مرآة عين الوجود المنتمي لبقا % % 23(@)(@@) % وليس فيه سواه دائما أبدا % % والكل فان به فيه قد انسحقا % % 24(@)(@@) % وهو القريب ولكن لست تدركه % % لأنه بك مستور وأنت وقا % % 25(@)(@@) % بحر الوجود الحقيقي لا تزال به % % ترى الظهور هنا الأكوان والفرقا % % 26(@)(@@) % والكل فان وهذا واحد أحد % % لا غيره معه للغير قد محقا % % 27(@)(@@) % فاسلك على أثري وانظر إلى نظري % % وثق بما قلته يا فوز من وثقا % % 28(@)(@@) % واشتم رائحتي من مسك نافجتي % % فإنني لك عطر في الورى عبقا % % PageV01P1226 البحر : - 1(@)(@@) % رعى الله بستانا بفيجة جلق % % على عذب ماء بارد متدفق % % 2(@)(@@) % به العين جادت كل حين بفيضها % % فأرخص فينا سعر كاس مروق % % 3(@)(@@) % رياض أريضات تظل غصونها % % تميل دلالا بالصبا المترقرق % % 4(@)(@@) % وللظل منها الميل يرسم شكلها % % على الأرض مثل الكاتب المتأنق % % 5(@)(@@) % أتينا إليها من جبال مهولة % % يكاد بها الماشي يخر بمزلق % % 6(@)(@@) % وكيف إذا كان الذي جاء راكبا % % ففي خطر لا شك فيه محقق % % 7(@)(@@) % وتختر وإن نحن سرنا به على % % بغال متى سارت بقلبك يخفق % % 8(@)(@@) % وكان إله الخلق يحظفنا بها % % فلم نر من خوف هنالك ملحق % % 9(@)(@@) % وسرنا على حكم الشهود بأمر من % % حبانا كرام وعز ورونق % % 15(@)(@@) % دور % % PageV01P1227 16(@)(@@) % ثم اعتنى عثمان % % في هذه السنة % % 17(@)(@@) % من عنده نوران % % من أعظم المنة % % 18(@)(@@) % خصوة بالرضوان % % عنه تروا الجنة % % 19(@)(@@) % والله بالإحسان % % يوفى لكم في الكيل % % 20(@)(@@) % دور % % 21(@)(@@) % وارضوا عن الكرار % % والصهر وابن العم % 22(@)(@@) % من خص بالأسرار % % حاوي العطاء الجم % 23(@)(@@) % مع جملة الأطهار % % آل وصحب ثم % % PageV01P1228 البحر : - 1(@)(@@) % لا تظلم الله بما لا يليق % % به ولا تدخل له في مضيق % % 2(@)(@@) % فإن أهل الجهل قد بالغوا % % في حقه بالنقص وهو الشفيق % % 24(@)(@@) % والأوليا الأخيار % % فيهم يطول الذيل % % PageV01P1229 البحر : - 1(@)(@@) % إنا 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms241# فهمنا عنه أمثالالنا % % هو ضارب فينا بخلق أكمل % % 2(@)(@@) % لم نضرب الأمثال نحن له ولم % % نعدل عن النهج القويم الأعدل % % 3(@)(@@) % يرحمهم دوما وهم في عمى % % عنه حمير بالغت في النهيق % % 3(@)(@@) % ولهم ضربنا قوله الأمثال في % % حق الذين تقدموا فتأمل % % 4(@)(@@) % ظنونهم فيها احتقار لهم % % من غير علم عندهم في الطريق % % 4(@)(@@) % لا تضربوا الأمثال لله الذي % % قد قال ذلك في الكتاب المنزل % % 5(@)(@@) % فالله يعلم والبرية كلهم % % لا يعلمون بمجمل ومفصل % % 5(@)(@@) % كل امرئ منهم يظن الردى % % هو الهدى والظن بئس الرفيق % % 6(@)(@@) % ومتى رأينا عالما في صورة % % كونية قلنا هو الحق الجلي % % 6(@)(@@) % سكران من خمر جهالاته % % يا ليته لو كان يوما يفيق % % PageV01P1230 7(@)(@@) % رام الظهور بصورة في عمله % % وبها توجه للحضيض الأسفل % % 7(@)(@@) % يا ويح قوم شبهوا ربهم % % وقيدوه وهو وهو الطليق % % 8(@)(@@) % يؤذونه سبحانه بالذي % % قد نسبوه وهو ما لا يليق % % 8(@)(@@) % والكل وذ علم ولو بحقيقة % % فيما مضى والآن والمستقبل % % 9(@)(@@) % والحق عنها قد تنزه قبلها % % وهو المنزه بعدها عنها العلى % % 9(@)(@@) % وكم شريك أثبتوه له % % به فخروا من مكان سحيق % % 10(@)(@@) % والحكم فيها قد أتى منه على % % ما كان منها في القديم الأول % % 10(@)(@@) % كذا له صاحبة أثبتوا % % وولدا قل ذاك عبد رقيق % % 11(@)(@@) % وعبدوا الأصنام جهلا وقد % % خروا إليها سجدا بالحقيق % % 11(@)(@@) % وهو الذي ما زال عن إطلاقه % % وهي التي عن نفيها لم ننزل % % PageV01P1231 12(@)(@@) % وعلقوا بالبيت أصنامهم % % ودنسوا البيت الحرام العتيق % % 12(@)(@@) % لكنها ثبتت به منه له % % كشفا بعلم ليس بالمتحول % % 13(@)(@@) % وتخصصا بإرادة وتقدرا % % بالقدرة القصوى عن المتأمل % % 13(@)(@@) % والنار أيضا عبدوها كما % % هم يعبدون الشمس ذات الشريق % % 14(@)(@@) % فاشهده منها مطلقا في نفسه % % ومقيدا بخصوصها المتأثل % % 14(@)(@@) % ويعبدون العجل من جهلهم % % وكفرهم بالله وهو المحيق % % 15(@)(@@) % أو شئت فاشهدها به معدومة % % لما تزل وهو الشهيد لها الولي % % 15(@)(@@) % وهكذا يؤذونه دائما % % وهو صبور ماءهم لا يريق % % 16(@)(@@) % كما حكى القرآن هذا لنا % % وكان ما قد كان من كل ضيق % % 16(@)(@@) % إن لشهادة ا والولاية كانتا % % للحق حتى صارتا بالحق لي % % PageV01P1232 17(@)(@@) % حتى أتى الله بنور الهدى % % وزال عن إشراقه ما يعيق % % 18(@)(@@) % وأسفر الفجر وفاحت به % % حدائق الورد وروض الشقيق 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms242# % % PageV01P1233 البحر : - 1(@)(@@) % رب فوارة خلال مروج % % ماؤها ناثر عقود لآلي % % 2(@)(@@) % كلما قم ذلك الماء فيها % % خر للأرض ساجد للحال % % 3(@)(@@) % وهو في حالة السجود تراه % % في هدير بذكره متوالي % % 4(@)(@@) % ليس إلا هو الشخوص إذا ما % % زال شخص أتاه شخص تالي % % 5(@)(@@) % جل يا ماء خالق لك أجري % % دائما فهو ربنا ذو الجلال % % 6(@)(@@) % قم به هكذا بنفسك واقعد % % في السواقي وصوت ذكرك عالي % % 7(@)(@@) % عبرة للذي يرى بك منا % % نفسه في تكون وزوال % % 8(@)(@@) % مدة العمر فهو لله عبد % % من أولي الأمر أمر مولى الموالي % % 19(@)(@@) % وقد تجلى لقلوب الورى % % رب لهم قد كان نعم الصديق % % 20(@)(@@) % وإنه غيب عن العقل بل % % عن الحواس الخمس قول حقيق % % PageV01P1234 21(@)(@@) % وما له ماهية تقتضي % % ظهوره فيها لمن يستفيق % % 22(@)(@@) % وإنما الخلق ظهوراته % % بهم تجلى مثل برق بريق % % 23(@)(@@) % لم يتغير جل وهو الذي % % يغير الغير ويهدي الفريق % % 24(@)(@@) % خذ علمه عني فإني به % % بحر مداه للأعادي عميق % % 25(@)(@@) % واحذر من الجبار يلقيك في % % بحري فكم من جاهل بي غريق % % 26(@)(@@) % واشرب معي كاس الوجود الذي % % عن غيره يغنيك فهو الرحيق % % PageV01P1235 البحر : - 1(@)(@@) % خليلي ما بال القوافل هكذا % % عن الحق مصروفون وهو ضلال % % 2(@)(@@) % يرون الوجود الحق للخلق ظاهرا % % يحقق هذا عندهم ويقال % % 3(@)(@@) % كان الوجود الخلق صار محققا % % وأما الوجود الحق فهو خيال % % 4(@)(@@) % خيال لديهم ظاهر في نفوسهم % % لهم غائب عنهم وذاك مخال % % 27(@)(@@) % وقل لمن لا يعرفون الذي % % هم فيه من خبث لديهم معيق % % 28(@)(@@) % يا عصبة الطغيان والافترا % % إلى متى كفوا الحريق الحريق % % 29(@)(@@) % ما أنتموا مثلي لكلي تعرفوا % % ما حجر الكدان مثل العقيق % % PageV01P1236 البحر : - 1(@)(@@) % حيا الحيا الوسمي سكان النقى % % 2(@)(@@) % ليت بهم تعود أيام اللقا % % 3(@)(@@) % أيام كنا بالفنا وبالبقا % % 4(@)(@@) % نهوى الوجود في الوجوه مطلقا % % وكل أمر لم يزل محققا % % 5(@)(@@) % دور % % 5(@)(@@) % فهم يعبدون الله فيما تخيلوا % % وقد بان في كل العقول عقال % % 6(@)(@@) % يا سعد سلم لي على وادي سلم % % 6(@)(@@) % وإن الوجود الحق صار مقيدا % % لديهم بأشيا تنمحي وتزال % % 7(@)(@@) % حيث ترى نارا على رأس علم % % 7(@)(@@) % فمن أجل هذا أنكروه وقد بدا % % وغاب وهامت في هواه رجال % % PageV01P1237 8(@)(@@) % به شغلوا عنه وأثار صنعه % % تقادير 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms243# حالت دونه وظلال % % 9(@)(@@) % فلاهم مع الأقوام فيما تحققوا % % ولا هم على تحقيقهم فيخال % % 10(@)(@@) % وجهل على جهل فجهل مركب % % وليس لهم في دفع ذاك مجال % % PageV01P1238 البحر : - 1(@)(@@) % ربنا الله ذلك المتعالي % % عن جميع الأشباه والأمثال % % 2(@)(@@) % عز في ملكه وجل فصارت % % عنه معقولة عقول الرجال % % 3(@)(@@) % لا بذكر يدرونه أو بفكر % % أوبوهم ولا خطور ببال % % 4(@)(@@) % فهو غيب كل الورى سبحته % % بتصاويرها وبالأشكال % % 5(@)(@@) % وهو مع ذلكالتنزه بادي % % يتجلى بسافل وبعالي % % 6(@)(@@) % وقريب للشيء من كل شيء % % وبعيد بعزة وجلال % % 7(@)(@@) % حركات الجميع مع سكنات % % كلها منه عنه في كل حال % % 8(@)(@@) % دعوى وجودكم بها الغير ظلم % % 8(@)(@@) % مالشيء سواه تأثير فعل % % أبدا غير نسبة الأفعال % % 9(@)(@@) % عرفته به أولوا العلم منا % % بعد محو النفوس باضمحلال % % PageV01P1239 9(@)(@@) % لا عاش يوما بالهنا ولا ارتقى % % وكل أمر لم يزل محققا % % 10(@)(@@) % حيث لم يتركوا لهم فيه دعوى % % أثر من تحرك أو مقال % % 10(@)(@@) % دور % % 11(@)(@@) % الله نور الأرض والسماء قل % % 11(@)(@@) % وله اسلموا به فرأوه % % فاعلا عين فعلهم بالتوالي % % 12(@)(@@) % ولهم محض نسبة الفعل أبقى % % للعبودية التي للكمال % % 12(@)(@@) % والكل ظلمة عليهم قد ثقل % % 13(@)(@@) % إن قلت باطل لك الحق يقل % % 13(@)(@@) % كلفتهم أحكامه أن يروها % % فهي منهم له على الإجمال % % 14(@)(@@) % سعدت والذي ادعاه في شقا % % وكل أمر لم يزل محققا % % PageV01P1240 15(@)(@@) % دور % % 16(@)(@@) % عبد الغني أغناه مولاه الغني % % 17(@)(@@) % بفضله وزاده زاد هني % % 18(@)(@@) % وبالصلاة والسلام يعتني % % 19(@)(@@) % على النبي المصطفى الذي رقى % % وكل أمر لم يزل محققا % % PageV01P1241 البحر : - 1(@)(@@) % كل أمر ترجوه من مخلوق % % يعتريه نوع من التعويق % % 2(@)(@@) % وأنا قائل وأستغفر الله مقال المجاز لا التحقيق % % 3(@)(@@) % لست أرضى من فعل إبليس شيئا % % غير ترك السجود للمخلوق % % 4(@)(@@) % لم يكن بالسجود يأمر ربي % % إنهم يسجدون للمخلوق % % 14(@)(@@) % ظاهر عندهم بهم وهو عنهم % % باطن غائب بغير زوال % % 15(@)(@@) % فهو من حيث ذاته في خفاء % % وهو من حيث وصفه في تلالي % % 16(@)(@@) % واتصال لهم به حيث عنه % % وجدوا ثم هم به في انفصال % % PageV01P1242 البحر : - 1(@)(@@) % إن ترم أن تعرف الأحوال % % والذي فيه أنا في الحال % % 2(@)(@@) % والذي أشهده مني % % دائما في الحل والترحال % % 3(@)(@@) % والذي نفسي تحدثني % % فيه بالإكثار والإقلال % % 4(@)(@@) % أنا ذاتي والصفات كذا % % سائر الأقوال 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms244# والأفعال % % 5(@)(@@) % وهو الله قد تجلى بفعل % % صادر عنه ظاهر بالحقوق % % 6(@)(@@) % فاعل ما يشاء بالشخص منه % % وهو فان مثل الخيال الطروق % % 7(@)(@@) % حاش لله أمر ربي بكفر % % وسجود لغير رب الشروق % % PageV01P1243 البحر : - 1(@)(@@) % كن أنت سابق عليهم لا تكن مسبوق % % وكلهم خلق هذا الصادق المصدوق % % 2(@)(@@) % وقل إذا رمت إن ترفع إلى العيوق % % أما الجميع هو الخالق أو المخلوق % % 5(@)(@@) % من عبادات وعصيان % % ومباحات لها أحلال % % 6(@)(@@) % واعتقادات مؤكدة % % والذي يخطر لي في البال % % PageV01P1244 البحر : - 1(@)(@@) % يا أيها البارق الذي برقا % % إني أنا أنت حيث كان لقا % % 2(@)(@@) % فإن قلب المحب قال له % % هذا هو الخالق الذي خلقا % % 3(@)(@@) % لا غيره من جميع ما وجدت % % كما البرايا السوالك الطرقا % % 4(@)(@@) % فاجمع من الحسن ما تراه وما % % يدركه العقل كيفما اتفقا % % 5(@)(@@) % وقل هو الله لا سواه ولا % % تقل سواه لطارق طرقا % % 6(@)(@@) % والكل فان وماله أبدا % % عين مع الحق باطل زهقا % % 7(@)(@@) % فإن هذا عقد الفتى وبه % % يلقى غدا ربه إذا صدقا % % 7(@)(@@) % من علوم الدين والدنيا % % في بكور العمر والآصال % % 8(@)(@@) % واشتغال الفكر ملتهيا % % والخطا والسهو والاغفال % % 9(@)(@@) % كل هذا دائما أبدا % % هو في الماضي وفي استقبال % % PageV01P1245 10(@)(@@) % خلق ربي لي فينسب في % % رؤيتي للخالق الفعال % % 11(@)(@@) % تارة عندي فأشهده % % فعل ربي ما به إشكال % % 12(@)(@@) % فأراه كله مننا % % من إلهي وهو لي إقبال % % 13(@)(@@) % وهو إحسان إلي به % % وهو للإكرام والإجلال % % PageV01P1246 البحر : - 1(@)(@@) % كلانا له هذا الوجود المحقق % % هو الأحد الفرد الذي هو مطلق % % 2(@)(@@) % فطورا هو الباري بدا حيث لا سوى % % وطورا لنا يبدو سواه ويخلق % % 3(@)(@@) % فرب ولا عبد إذا العبد لم يكن % % وعبد ولا رب به الغيب ملحق % % 4(@)(@@) % وليس هما باثنين ندريهما معا % % كما عند ذي جهل بذلك ينطق % % 5(@)(@@) % فإن الذي تلقى هو الرب وحده % % له الذات والأسناء وهو المحقق % % 6(@)(@@) % وأنت السعيد المسلم المؤمن الذي % % لك الدين يا هذا وأنت الموفق % % 7(@)(@@) % وأما هو العبد الذي عنه غائب % % به ربه ينقى له أو يصدق % % 8(@)(@@) % وذلك حال الغافلين أولى الشقا % % وليس لهم عهد يدوم وموثق % % 9(@)(@@) % تبارك مولى واحد وعبيده % % كثيرون والمولى الكثير المفرق % % 10(@)(@@) % كما قال لن تحصوه في كلماته % % فتاب 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms245# عليكم فاقرأوا ما يحقق % % PageV01P1247 14(@)(@@) % فالذي من قسم طاعات % % محض إنهام بلا إهمال % % 15(@)(@@) % والمباح في القلب يقلبه % % طاعة بالقصد للإكمال % % 16(@)(@@) % والذي من قسم معصية % % بدلته توبة استعجال % % 17(@)(@@) % وهو بالطاعات منقلب % % حسنا من أحسن الأعمال % % 18(@)(@@) % ثم إني كل ذاك أرى % % أنه فعلى على استقلال % % 19(@)(@@) % وهو منسوب إلى كما % % جاء في التكليف باسترسال % % 20(@)(@@) % طبق ما التشريع جاء به % % عن رسول الله ذي الأفضال % % 21(@)(@@) % وهو مني كله شكر % % وثناء ما به إخلال % % 22(@)(@@) % للإله الحق خالقنا % % منحجح المصود والآمال % % 23(@)(@@) % وإذا فعل تكون له % % نسبتان الأمر فيه مجال % % PageV01P1248 البحر : - 1(@)(@@) % الباطن السابق الظاهر هو المسبوق % % والكل واحد فكن أعلى من العيوق % % 2(@)(@@) % واخرجعن الكل أنت الكل يا معتوق % % أما الجميع هو الخالق أو المخلوق % % 24(@)(@@) % سائغ لا شرع يمنعه % % لا ولا للعقل فيه عقال % % 25(@)(@@) % نسبة لله جل كذا % % نسبة للعبد كيف يقال % % PageV01P1249 البحر : - 1(@)(@@) % انفي الحوادث ولا تنفي الوجود الحق % % وجود ما قد ظهر منها لها أورق % % 2(@)(@@) % فإنها عدم من بعضها تشتق % % فيه الوجود كتبها أحرفا في رق % % 26(@)(@@) % وحقيقيان أمرهما % % لا مجاز ذا ولبس محال % % 27(@)(@@) % فأنا ما بين رؤية ذا % % فرط أنعام من المفضال % % PageV01P1250 البحر : - 1(@)(@@) % كان فرعون قاصدا تحقيقه % % بالدعاوى فزندقته الحقيقة % % 2(@)(@@) % ثم لما طغى فقال لقوم % % إنني ربكم يضل فريقه % % 3(@)(@@) % ولكم ما علمت غيري إلها % % ونسي سالف العهود الوثيقة % % 4(@)(@@) % فأطاعوه في المقال بجهل % % ورأى كل جمعهم تصديقه % % 5(@)(@@) % أرسل الله بالشريعة موسى % % وأخاه هارون معه شقيقه % % 6(@)(@@) % ينكران الضلال منه بجمع % % لم يضف مع حضوره تفريقه % % 7(@)(@@) % قال قولا له على القرب مكرا % % منه حتى في البحر ذاق غريقه % % 8(@)(@@) % قال آمنت طامعا في حياة % % مثل موسى فلم يجد تعويقه % % 28(@)(@@) % وأراه تارة مني % % شكر ربي الخالق المتعال % % 29(@)(@@) % هذه في الله حالتنا % % فاسمعوا يا أيها العذال % % PageV01P1251 30(@)(@@) % قد ذكرناها لرؤيتنا % % إنها تخفي على الجهال % % 31(@)(@@) % فيظنون الطريق إلى % % علم غيب الله محض مقال % % 32(@)(@@) % أو بفكر ذاك يحصل أو % % بتعاني ذكره المتوال % % 33(@)(@@) % إنما بالله جل إذا % % لازم التقوى بلا إهمال % % 34(@)(@@) % واقتف آثار من سلفوا % % مع دوام الصدق والإقبال % % PageV01P1252 البحر : - 1(@)(@@) % لله في كل ما يبديه تعليل % % والخلق تكثيره 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms246# في الأمر تقليل % % 2(@)(@@) % صح الجواب لقوم يسألون وما % % صح الجواب لأن الفعل توكيل % % 3(@)(@@) % في كل شيء له سر الوكالة إذا % % لم يخرج الشيء عنه فهو تأصيل % % 4(@)(@@) % وإن ردتمأ جوابا واحدا فقفوا % % هنا فماهذه قيل التماثيل % % 5(@)(@@) % معنى يراد ومعنى لا يراد سرت % % حقائق الكل فيما فيه تكميل % % 9(@)(@@) % ولقد كان عارفا بالتجلي % % فيه لكن دهاه قطع الرقيقه % % 10(@)(@@) % حيث أضحى ينفي السوى منه للعي % % ن على غرة بنفس رشيقه % % 11(@)(@@) % ثم لما تدارك الأمر كشفا % % وجد الحق باعثا توفيقه % % 12(@)(@@) % وهو من قبل ذائق ليس يخفى % % عنه في جانب الإله دقيقه % % 13(@)(@@) % غير حكم السوى به فرأى المو % % ت الطبيعي يقتضي ترقيقه % % PageV01P1253 البحر : - 1(@)(@@) % كعبة الحسن أسفرت بالجمال % % وتبدت لصاحب الأحوال % % 2(@)(@@) % ولها مقلة من الحجر % % الأسود ترنو ببهجة ودلال % % 3(@)(@@) % ريقها زمزم يمج بعذب % % سائع للمتيمين زلال % % 4(@)(@@) % وحطيم محبها بغرام % % صب ميزابه بفرط جلال % % 5(@)(@@) % نظرتها عيونها بعيون % % العاشق الواله البعيد المجال % % 6(@)(@@) % وإذا كنت عابدا فهي سلمى % % لبست ثوب هيبة وكمال % % 7(@)(@@) % وأشارت إلى الطواف بوجه % % يفضح البدر بالسنا والتلالي % % 8(@)(@@) % ويرى الزاهد المجرد بيتا % % ملأته مهابة الأفضال % % 14(@)(@@) % فأحست بقطعها النفس منه % % عن إله تعودت تعليقه % % 15(@)(@@) % آية الإنشقاق قد نبهته % % فأصاب الهدى بنفس مفيقه % % PageV01P1254 16(@)(@@) % ورأى وسع رحمة الله حتى % % جاءها مسلما فلم ير ضيقه % % 17(@)(@@) % ولقد صار آية لأناس % % بعده في شريعة وحقيقه % % 18(@)(@@) % جاء موسى إليه بالشرع يدعو % % منكر للحقيقة الزنديقة % % 19(@)(@@) % وأراد الإله اطلاع موسى % % أن في الباطن العلوم الأنيقه % % 20(@)(@@) % وابتلاه فلم يطق صحبة الخض % % ر وقد كان في المسير رفيقه % % 21(@)(@@) % فغدا منكرا عليه إلى أن % % نال تغريبه وذا تشريقه % % PageV01P1255 البحر : - 1(@)(@@) % اطلب العلم كالذباب إذا ما % % طردوه يعود في كل حال % % 2(@)(@@) % واشتغل بالمطالعات لما في % % كتب العلم أنت طول الليالي % % 3(@)(@@) % وإذا أشكلت عليك أمور % % سل خبير أو لا تقف في السؤال % % 4(@)(@@) % وإذا لم تجد خبيرا فدعها % % لوجود الخبير ذي الأفضال % % 5(@)(@@) % إن هذا هو السعادة أما % % غير هذا فمحض قيل وقال % % 22(@)(@@) % ومشى الناس في شريعة موسى % % ليس يدرون غيرها في الخليقه % % 23(@)(@@) % وعليها قد جاءت الرسل حتى % % كان عيسى وأمه الصديقه % % 24(@)(@@) % فأراهم حقائقا جهلوها 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms247# % % وعليه الحمار أبدى نهيقه % % 25(@)(@@) % ثم هموا بقتله فوقاه الله % % بالرفع مشهدا لن يطيقه % % 26(@)(@@) % ثم إن الإله أرسل بالجم % % ع وبالرفق نفس حر شفيقه % % PageV01P1256 البحر : - 1(@)(@@) % آلة الشكر هذه الأموال % % تترقى بها النسا والرجال % % 2(@)(@@) % فاجمعوها لتنفقوها على من % % تنفقوها عليه وهي حلال % % 3(@)(@@) % واقصدوا وجه ربكم لتنالوا % % كل خير وليس منكم سؤال % % 4(@)(@@) % درهم تنفقونه فيه ينمو % % وبه يدفع الردى والضلال % % 5(@)(@@) % وبه الله عنك راض إذا كا % % ن حلالا تنال مالا ينال % % 27(@)(@@) % فدعا الناس ظاهرا ودعاهم % % باطنا فهو مسجد وحديقه % % 28(@)(@@) % سيد المرسلين قد ود موسى % % لو رأى منه طيب تلك السليقه % % 29(@)(@@) % وسيدعو لشرعه الناس عيسى % % ثم في قبره يكون لصيقه % % 30(@)(@@) % هكذا الأمر جاء صلى عليهم % % ربنا ما نفى الجديد عتيقه % % PageV01P1257 البحر : - 1(@)(@@) % إن روحي بك روح مطلقه % % علقت من حين كانت علقه % % 2(@)(@@) % نطفة من أكل أدم وغذا % % ركبت من أربع متفقه % % 3(@)(@@) % من تراب ثم ماء وهوا % % ثم نار رتب مفترقه % % 4(@)(@@) % ظهرت عن كل جسم وهو عز % % ألف الغيب الهيولى اللبقه % % 5(@)(@@) % والهيولى عن صفات ظهرت % % وهي عن ذات بكل محدقه % % 6(@)(@@) % فهي روح آخر الأمر كما % % أول الكل غدت مستبقه % % 6(@)(@@) % واحذر حذر أن تقتفي كرما في % % غير شكر الإله فهو بال % % 7(@)(@@) % أو بمال محرم فهو إثم % % وخصوصا فيما عساه يقال % % 8(@)(@@) % إنما الشكر فرض عين علينا % % وهو منا الأقوال والأفعال % % 9(@)(@@) % كل ما كان طاعة فهو شكر % % والمعاصي كفران مالا يزال % % PageV01P1258 10(@)(@@) % من تناويع نعمة الله ما لم % % تحص فالله محسن مفضال % % PageV01P1259 البحر : - 1(@)(@@) % ألا فتحقق إن كل استقامة % % بغير اعوجاج ما عليها معول % % 2(@)(@@) % فإن اعوجاج القوس لاشك إنه % % استقامته عن تلك لا يتحول % % 3(@)(@@) % وما مقصدي بالاعوجاج سوى الذي % % يراه بساهي عينه المتقول % % 4(@)(@@) % أعد نظرا في الصالحين ولا تكن % % بمنكر ما يأتون فهو المؤول % % 5(@)(@@) % فإن عليهم عين حفظ قديمة % % من الله عما قد نهى يا مسول % % 7(@)(@@) % حملت للكل والكل لها % % حامل كالعين ذات الحدقه % % 8(@)(@@) % ولها الكل لباس فمتى % % عرفت نالت يقينا وثقه % % 9(@)(@@) % وتدلت وتدانت شرفا % % من جنان عاليات عبقه % % 10(@)(@@) % ومقامات وأنواع على % % ما على شيء هنا منطبقه % % 11(@)(@@) % ومتى ما جهلت حلت 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms248# لظى % % وغدت في جهلها محترقه % % PageV01P1260 البحر : - 1(@)(@@) % عم صباحا أيها الطلل % % رسم أمر كله جلل % % 2(@)(@@) % أمر مولى عنه قد ظهرت % % كل روح ما بها خلل % % 3(@)(@@) % وهو شأن الحق يسفر عن % % نشأة بالنقص تكتمل % % 4(@)(@@) % كل يوم قال خالقنا % % هو في شأن ولا ملل % % 5(@)(@@) % يا عظيم الخطب أنت لها % % لا يملك القصد والأمل % % 12(@)(@@) % وهي في أنواع ذل وأذى % % وهي في دنيا وأخرى قلقه % % 13(@)(@@) % فافهم الأول والآخر لا % % تجهل الرزاق والمرتزقه % % 14(@)(@@) % واعرف الرزق وحققه به % % إنه الحق وكن معتنقه % % 15(@)(@@) % ذا وجود نازل في رتب % % بأمانات لها أو سرقه % % PageV01P1261 البحر : - 1(@)(@@) % إنما رزقك الذي حزته في % % يدك اقنع به بنفس مفيقه % % 2(@)(@@) % وتأمل في رزق غيرك تلقا % % ه خيالا لديك ليس حقيقه % % 3(@)(@@) % لا تكن فيه مطالعا مثل كلب % % ممسك عظمة بفيه رقيقه % % 4(@)(@@) % فرأى ظلها بماء فألقا % % ها لأخذ التي رأى في الطريقه % % 6(@)(@@) % جامع للكل منفرد % % ما سيأتي فيك والأول % % 7(@)(@@) % وعليكم جاء أنفسكم % % فاستمعها أيها البطل % % 8(@)(@@) % وتأمل من سواك ومن % % هو أنت الكل قد بطلوا % % 9(@)(@@) % ثم إن الغيب عنك بقى % % ماله عما به حول % % PageV01P1262 البحر : - 1(@)(@@) % انظر إلى الكون وهو في عدم % % واطلب له الخالق الذي خلقه % % PageV01P1263 البحر : - 1(@)(@@) % ليس إلا مظاهر ومجالي % % فاتركونا نجل بهذا المجال % % 2(@)(@@) % تجد هناك الوجود منفردا % % به تعالى مقال أهل ثقه % % 2(@)(@@) % ما مع الله في الوجود سواه % % إنما نحن فرضه للمحال % % 3(@)(@@) % وتعرف الكل لا وجود لهم % % إلا به والعقول متفقه % % 3(@)(@@) % من قديم أحبنا فأحببناه % % والحب مثبت في الخيال % % 4(@)(@@) % فإن معنى به الظهور له % % بهم شئون تلوح مفترقه % % 4(@)(@@) % صورا تختفي وتظهر طورا % % في محل بين الحبيبن خالي % % 5(@)(@@) % فافهموا يا عقول معنى كلامي % % وترقوا به لأوج المعاني % % 5(@)(@@) % وكل يوم أي لمحة هو في % % شأن عليه الشئون منطبقه % % 6(@)(@@) % إنما الحق للجميع محب % % فتراه مصور الأمثال % % PageV01P1264 6(@)(@@) % واحذر تراهم وذا الوجود لهم % % وهم به والفهوم مستبقه % % 7(@)(@@) % وبعد هذا تروم خالقهم % % تطلبه أن تجده يا نبقه % % 7(@)(@@) % لكن الحب منه لا منك من % % هو عنه في غفلة واشتغال % % 8(@)(@@) % تكن جهولا به تخيله % % كما تخيلتهم لتسترقه % % 8(@)(@@) % أسرته لضعفه شهوات % % من حرام لذيذة وحلال 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms249# % % 9(@)(@@) % هيهات هيهات أن تفوز به % % وأنت واه ولم تزل علقه % % 9(@)(@@) % فلو انزاح فيه عن كل شيء % % لرآه عليه في إقبال % % 10(@)(@@) % تستأهل القرع بالعصي علي % % تركك تعظيمه وبالفلقه % % 10(@)(@@) % ثق بمولاك واشتغل في رضاه % % وتحقق واترك جميع الموالي % % 11(@)(@@) % إنما الكل فتنة لك فاعلم % % أنه ذو الإكرام والإجلال % % PageV01P1265 البحر : - 1(@)(@@) % غير الوجود محال % % عليه أنت محال % % 2(@)(@@) % فافطن له وتأمل % % فالعقل فيه عقال % % 3(@)(@@) % هو الهدى للبرايايا واحدا وكثيرا بماعليه يحال % وما سواه ضلالسقط بيت ص % % 4(@)(@@) % من كل تقدير شيء % % في العلم منه مثال % % 5(@)(@@) % قدرتنا من قديم % % فنحن شيء محال % % 6(@)(@@) % فرضتنا فظهرنا % % بك العراض الطوال % % 7(@)(@@) % وأنت أنت وجود % % ونحن نحن خيال % % 8(@)(@@) % أستغفر الله إن % % الخيال شيء يخال % % 9(@)(@@) % بل نحن لا شيء لكنلأجل تقريب قوم في العقل منهم خبال % هذا كلام يقالسقط بيت ص % % 10(@)(@@) % قد اعتنوا بالمعاني % % وهم سراب وآل % % PageV01P1266 11(@)(@@) % فحاولوا الحق فيها % % وليس فيها ينال % % PageV01P1267 البحر : - 1(@)(@@) % يا للبرية إن قلبي ما ارتوى % % 2(@)(@@) % من معي لازال يظهر بالقوى % % 3(@)(@@) % وأنا الذي أشكو المحبة والجوى % % 4(@)(@@) % وأمر ما لاقيت من ألم النوى % % قرب الحبيب وما إليه وصول % % 5(@)(@@) % يدنو فأحسب أنه أنى وما % % 6(@)(@@) % هو غير قرب والجهول له العمى % % 7(@)(@@) % فاعجب لنور فيه كوني أظلما % % 8(@)(@@) % كالعيس في البيداء يقتلها الظما % % والماء فوق ظهورها محمول % % PageV01P1268 البحر : - 1(@)(@@) % دع من يجادل أو يماطل % % واعلم بأن الكل باطل % % 2(@)(@@) % والحق حق واحد % % وبه غبار الكون ساطل % % 3(@)(@@) % يا من يعدده ولا % % يدريه خاطي أنت خاطل % % 4(@)(@@) % يا غافلون تنكبوا % % عنا فغيث الفتح هاطل % % 5(@)(@@) % هذا الذي لا تعرفو % % ن لو جريتم في القساطل % % 6(@)(@@) % وقفوا بأرض عقولكم % % إن الذي تدرون عاطل % % 7(@)(@@) % ما حظكم غير السوى % % منه وما فزتم بناطل % % 8(@)(@@) % الله أكبر هذه % % ذكرى لأفئدة العواطل % % PageV01P1269 البحر : - 1(@)(@@) % ظهر الوجود الحق في مرءآتنا % % إذ نحن في العدم المقدر لم نزل % % 2(@)(@@) % فوجودنا هو صورة لوجوده % % لا أنه ذاك الوجود علا وجل % % 3(@)(@@) % وكذا ظهرنا نحن في مرءآته % % مع أننا عدم ومنه على وجل % % 4(@)(@@) % وهو المقدر بالصفات ذواتنا % % وصفاتنا من غير بدء في الأزل % % 5(@)(@@) % فظهروه فينا بقول قل انظروا % % ماذا الذي هو في السما والأرض هل 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms250# % % 6(@)(@@) % وكذاك وهو الله قال بأنه % % هو في السما والأرض من يجحده زل % % 7(@)(@@) % مع أننا نحن العوالم كلها % % موجودة فافهم وفصل ما انجمل % % 8(@)(@@) % واحذر تظن تغير وتبدلا % % في ربنا عما عليه فما انتقل % % 9(@)(@@) % وكذلك احذر أن تظن بأننا % % عما عليه لنا التغير والبدل % % 10(@)(@@) % فإذا رآنا فهو راء نفسه % % لا أننا هو أو بنا حاشاه حل % % PageV01P1270 11(@)(@@) % وإذا رأيناه فأنفسنا نرى % % لا غير فاكشف عن سنا هذا المحل % % 12(@)(@@) % هذا هو العرفان وهو أجل ما % % يأتي به بشر وحققه الأمل % % 13(@)(@@) % أرث النبي محمد وهو الذي % % جاءت به ساداتنا القوم الأول % % PageV01P1271 البحر : - 1(@)(@@) % إنما وحدة الوجود لدينا % % وحدة الحق فافهموا ما تقول % % 2(@)(@@) % وحدة الله وحدة لا سواها % % شهدتها منا الكبار الفحول % % 3(@)(@@) % وسواء قلنا الوجود أو الحق % ق فلا فرق عندنا يا جهول % % 4(@)(@@) % لا تظن الوجود حيث ذكرنا % % ه هو الخلق عندنا المبذول % % 5(@)(@@) % هو حق بعد الفنا عن سواه % % يتجلى فتضمحل العقول % % 6(@)(@@) % ولهدا كان الفنا هو شرطا % % عندنا للمزيد فيه حلول % % 7(@)(@@) % وهو طهر الأرواح من نجس قد % % حل فيها من الكثيف يجول % % 8(@)(@@) % لطخ الروح حين خالطها إذ % % جهلته وغاب عنها القبول % % 9(@)(@@) % واعتراها أيضا هنا حدث من % % كل معنى به الحجى مشغول % % 10(@)(@@) % فالنجاسات ما نعات المصلى % % وكذاك الأحداث حين تحول % % PageV01P1272 11(@)(@@) % بين ربي وبينه فارفعوها % % بعلوم السما يكون الوصول % % PageV01P1273 البحر : - 1(@)(@@) % أقبل ودع عنك الكسل % % وكن الذباب على العسل % % 2(@)(@@) % وإذا طردت فعد إلى % % ما كنت تطلبه وسل % % 3(@)(@@) % واعلم بأنك قاتل % % فالنصل في طول الأسل % % 4(@)(@@) % والحب يخرج مثله % % والبزر أشجارا نسل % % 5(@)(@@) % ومتى تركت تركت لا % % طهر الإناء ولا انغسل % % PageV01P1274 البحر : - 1(@)(@@) % إياك إياك ربك تفهمو بالعقل % % فإن ذا فيك نابت مثل نبت البقل % % 2(@)(@@) % وأنت والعقل فاني والذي في الحقل % % وأعده في الغيب واتبع ما أتى في النقل % % PageV01P1275 البحر : - 1(@)(@@) % رفعت ولم أرفع إلى غير منزلي % % من الغيب أمر الحسن المتفضل % % 2(@)(@@) % وقد زج بي في النور نور وجوده % % فأصبحت معدوما بغير تحول % % 3(@)(@@) % وجود قديم نحن فيه هياكل % % بغير وجود هيئة المتخيل % % 4(@)(@@) % تعالوا بنا يا تائهون لعلنا % % نكون كما كنا بترك التعلل % % 5(@)(@@) % ونسلم عن كشف 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms251# إليه أمورنا % % فليس لكم أمر يكون وليس لي % % 6(@)(@@) % ونشهد أمر الله فينا كأنه % % بنا لمع برق في دجى الكون ينجلي % % 7(@)(@@) % وما البرق إلا نحن إذ نحن أمره % % هو القدر المقدور في الذكر قد تلى % % 8(@)(@@) % ولا تبعدوا عني بأحوال غفلة % % دهنكم فأصبحتم بعاد التأمل % % 9(@)(@@) % وجار عليكم حب دنيا دنية % % وليس عليها عندنا من معول % % 10(@)(@@) % قفوا في حمى الإيمان لا تتحولوا % % إلى غيره بالعقل قصد التوصل % % PageV01P1276 11(@)(@@) % ودوموا على الطاعات خالصة عسى % % بكم يرد الساقي إلى عذب منهل % % 12(@)(@@) % هنالك نور الكشف إن شاء ربنا % % وإلا فأنتم في مقام مؤمل % % 13(@)(@@) % مقام أولي الإيمان بالغيب فاسبقوا % % إليه ولا تصغوا إلى قول عذل % % PageV01P1277 البحر : - 1(@)(@@) % إن أحبابنا وهم سادة الحي % % 2(@)(@@) % هجر وابعد وصلهم مغر ماعي % % 3(@)(@@) % وعلى البعد مذلوي ركبهم لي % % 4(@)(@@) % لمعت نارهم وقد عسعس % % الليل ومل الحادي وتاه الدليل % % 5(@)(@@) % هي بي يا محبهم نحوهم هي % % 6(@)(@@) % لا تموه بزينب لا ولامي % % 7(@)(@@) % نارهم في الحشى بدت وكوت كي % % 8(@)(@@) % فتأملها وفكري من البين % % عليل ولحظ عيني كليل % % 9(@)(@@) % جن عقلي بهم إذا الليل جنا % % 10(@)(@@) % والحشى كلما تذكر حنا % % PageV01P1278 11(@)(@@) % ليت شعري كيف السلو وأنى % % 12(@)(@@) % وفؤادي هو الفؤاد المعنى % % وغرامي ذاك الغرام الدخيل % % 13(@)(@@) % لذلي في هوى المليحة سلبي % % 14(@)(@@) % وكشف الحجاب عن عين قلبي % % 15(@)(@@) % لا تلمني قضيت يا صاح نحبي % % 16(@)(@@) % ثم قابلتها وقلت لصحبي % % هذه النار نار ليلى فميلوا % % 17(@)(@@) % أنا من أجلها أحب المليحا % % 18(@)(@@) % وفؤادي يهوى القوام الرجيحا % % 19(@)(@@) % ضج وميق وحاولوا الترجيحا % % 20(@)(@@) % فرموا نحوها لحاظا صحيحا % % ت فعادت خواسئا وهي حول % % PageV01P1279 21(@)(@@) % ليتهم أقصروا بها ما استطالوا % % 22(@)(@@) % وبايمانهم على القرب ألوا % % 23(@)(@@) % قصدوها فخابت الآمال % % 24(@)(@@) % ثم مالوا إلى الملام وقالوا % % خلب ما رأيت أم تخييل % % 25(@)(@@) % هل أتدري وعلم حالي لديها % % 26(@)(@@) % ويح أهل الملام لاموا عليها % % 27(@)(@@) % ثم لي موهوا بها تمويها % % 28(@)(@@) % فتجنبتهم وملت إليها % % والهوى مركبي وشوقي الزميل % % 29(@)(@@) % صار ختمي في حب علوة بدءا % % 30(@)(@@) % وتقربت مسمعا بل ومرأى % % PageV01P1280 31(@)(@@) % ثم إني دنوت والغير ينأى % % 32(@)(@@) % ومعي صاحب أتى يقتفي الآ % % ثاروا الحب شرطه التطفيل % % 33(@)(@@) % قد شربنا في حبها خمرة الدن % % 34(@)(@@) % وعلينا الساقي المليح بها من % % 35(@)(@@) % ثم جئنا والقلب من 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms252# شوقه جن % % 36(@)(@@) % وهي تعلو ونحن ندنو إلى أن % % حجزت بينها طلول حلول % % 37(@)(@@) % منية القلب بالجمال تعالت % % 38(@)(@@) % وإليها ملنا نهيم فمالت % % 39(@)(@@) % وقصدنا طلولها حين طالت % % 40(@)(@@) % فدنونا من الطلول فحالت % % زفرات من دونها وغليل % % PageV01P1281 41(@)(@@) % قد تناءت ديارها وطريح % % 42(@)(@@) % أنا والجفن بالدموع قريح % % 43(@)(@@) % ثم مذ جئت والغرام صحيح % % 44(@)(@@) % قلت من بالديار قالوا جريح % % وأسير مكبل وقتيل % % 45(@)(@@) % دار سلمى ما دار فيها كثيف % % 46(@)(@@) % قط إلا وناله تلطيف % % 47(@)(@@) % قيل لي حين جئتها يا شريف % % 48(@)(@@) % ما الذي جيت تبتغي قلت ضيف % % جاء يبغي القرى فأين النزول % % 49(@)(@@) % يا لسلمى تعز قوما وتحقر % % 50(@)(@@) % وأسير الهوى يرى الحر في القر % % PageV01P1282 51(@)(@@) % جئتها والفنا من الغير مقفر % % 52(@)(@@) % فأشارت بالرحب دونك فاعقر % % ها فما عندنا لضيف رحيل % % 53(@)(@@) % حبنا العز والعلى من لدنه % % 54(@)(@@) % والكمالات المفاخرو منه % % 55(@)(@@) % إن ترمنا فما لما رمت كنه % % 56(@)(@@) % من أتانا ألقى عصا السير عنه % % قلت من لي بها وأين السبيل % % 57(@)(@@) % حثنا الشوق في مهامه لوم % % 58(@)(@@) % لديار الهوى وبهجة يوم % % 59(@)(@@) % ثم سرنا نزيل آثار نوم % % 60(@)(@@) % فحططنا إلى منازل قوم % % صرعتهم قبل المذاق الشمول % % PageV01P1283 61(@)(@@) % لفؤادي في الحب أوفر قسم % % 62(@)(@@) % والهوى قد هوى بروح وجسم % % 63(@)(@@) % ونداماي ليس منهم سوى اسم % % 64(@)(@@) % درس الوجد منهمو كل رسم % % فهو رسم والقوم فيه حلول % % 65(@)(@@) % هو قلبي عن الهوى ليس ينفك % % 66(@)(@@) % فاقطع اللوم صاح من حيثما رك % % 67(@)(@@) % إنما القوم طودهم بالهوى أندك % % 68(@)(@@) % منهمو من عفا ولم يبق للشك % % وى ولا للدموع منه مقيل % % 69(@)(@@) % منزل الغانيات إياك منه % % 70(@)(@@) % فهو للسلب في المحبة كنه % % PageV01P1284 71(@)(@@) % ولكم عاشق عهدت لديه % % 72(@)(@@) % ليس إلا الأنفاس تخبر عنه % % وهو منها مبرأ معزول % % 73(@)(@@) % ركن أهل الملام من صبوتي ارتج % % 74(@)(@@) % وأخلاي في الهوى صبرهم عج % % 75(@)(@@) % فترى منهم الطريح وقد لج % % 76(@)(@@) % ومن القوم من يشير إلى وج % % د تبقى عليه منه القليل % % 77(@)(@@) % أنا أهوى نواظرا وقواما % % 78(@)(@@) % ذاك رمحا أرى وتلك سهاما % % 79(@)(@@) % ولا هل الهوى غدوت إماما % % 80(@)(@@) % ولكل رأيت منهم مقاما % % شرحه في الكتاب مما يطول % % PageV01P1285 81(@)(@@) % اتركوا اللوم يا عواذل ويكم % % 82(@)(@@) % وامنحوني يا سادتي ما لديكم % % 83(@)(@@) % أنا أرسلت بالكتاب إليكم % % 84(@)(@@) % قلت أهل الهوى سلام عليكم % % لي فؤاد بحبكم 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms253# مشغول % % 85(@)(@@) % عرف ليلى من النسائم أشتم % % 86(@)(@@) % وفؤادي بزائد الحب يهتم % % 87(@)(@@) % لي ضلوع من كثرة الشوق في غم % % 88(@)(@@) % وجفون دق قرحتها من الدم % % ع حثيثا إلى لقاكم سيول % % 89(@)(@@) % ليس في الحق يا ابن ودي جحد % % 90(@)(@@) % وجدك أسم به وهل لك وحد % % PageV01P1286 91(@)(@@) % يا كراما لضدهم ضم لحد % % 92(@)(@@) % لم يزل حادث من الشوق يحدو % % ني إليكم والحادثات تحول % % 93(@)(@@) % سال دمعي دما من الماء أميع % % 94(@)(@@) % وحدثني من كل ما شاع أشيع % % 95(@)(@@) % ضعت والود بين قومي أضيع % % 96(@)(@@) % واعتذاري ذنب فهل عند من يع % % لم عذري في ترك عذري قبول % % 97(@)(@@) % إن ذاك الحمى وذاك المكانا % % 98(@)(@@) % خطفتني بروقه لمعانا % % 99(@)(@@) % يا رعاة الحمى أمانا وأمانا % % 100(@)(@@) % جئت كي أصطلي فهل لي إلى نا % % ركو هذه الغداة سبيل % % PageV01P1287 101(@)(@@) % أهل ودي أهل الهوى فائتمنهم % % 102(@)(@@) % فالو فاقدو وجدته من لدنهم % % 103(@)(@@) % ورجوت الكرام أطلب منهم % % 104(@)(@@) % فأجابت شواهد الحال عنهم % % كل حد من دونها مفلول % % 105(@)(@@) % إن هذا الضيا وهذا البريقا % % 106(@)(@@) % لسلميى فاسلك إليها الطريقا % % 107(@)(@@) % وإذا الكون أظهر التزويقا % % 108(@)(@@) % لا تروقنك الرياض الأنيقا % % ت فمن دونها ربا ودخول % % 109(@)(@@) % قف على الباب للمحبة مدمن % % 110(@)(@@) % فهواها غالي لدي القوم مثمن % % PageV01P1288 111(@)(@@) % هي سلمى لم يدرها غير مؤمن % % 112(@)(@@) % كم أناها قوم على غرة من % % ها وراموا أمرا فعز الوصول % % 113(@)(@@) % حسبوا ماءها يزيل أواما % % 114(@)(@@) % فأذيبوا واعدموا إعداما % % 115(@)(@@) % ثم لما أبدت لهم إعلاما % % 116(@)(@@) % وقفوا شاخصين حتى إذا ما % % لاح للوصل غرة وحجول % % 117(@)(@@) % عرفات الهوى بها الثج والعج % % 118(@)(@@) % لك طوبى يوما إذا فزت بالحج % % 119(@)(@@) % فاقصد الركب إن تجد شوقهم لج % % 120(@)(@@) % وبدت راية الوفا بيد الوج % % د ونادى أهل الحقائق جولوا % % PageV01P1289 121(@)(@@) % إن عهدي الوثيق في الحب ما انحل % % 122(@)(@@) % وأخو لصادقا دام والمدعي مل % % 123(@)(@@) % وعلوم الهوى تقول الهوى جل % % 124(@)(@@) % أين من كان يدعينا فهذا ال % % يوم فيه صبغ الدعاوى يحول % % 125(@)(@@) % نحن قوم مقامنا بالعلى خص % % 126(@)(@@) % وعلينا في محكم الذكر قد نص % % 127(@)(@@) % معشر للهدى بهم كلما اقتص % % 128(@)(@@) % حملوا حملة الفحول ولا يص % % دع يوم اللقاء إلا الفحول % % 129(@)(@@) % أهل أيد كالغيث بالبذل سحت % % 130(@)(@@) % طالما بالعداة في الحرب ضجت % % PageV01P1290 131(@)(@@) % ثم لما النوى عليهم ألحت % % 132(@)(@@) % بذلوا أنفسا سخت 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms254# حين شحت % % بوصال واستصغر المبذول % % 133(@)(@@) % سادة قلعة الأنا هدموها % % 134(@)(@@) % أي حال في الحرب ما عملوها % % 135(@)(@@) % دخلوا في الوغى ليخترموها % % 136(@)(@@) % ثم غابوا من بعدما اقتحموها % % بين أمواجها وجاءت سيول % % 137(@)(@@) % سادة عن قلوبهم زال غل % % 138(@)(@@) % ولهم في عز الحقيقة ذل % % 139(@)(@@) % ثم لما بهم لهم كان ظل % % 140(@)(@@) % قذفتهم إلى الرسوم فكل % دمه في طلولها مطلول % % PageV01P1291 141(@)(@@) % صرح القوم لي بما فكرهم حس % % 142(@)(@@) % يحرق الكف للجهول إذا جس % % 143(@)(@@) % ثم قالوا لكل من يطلب المس % % 144(@)(@@) % نارنا هذه تضيء لمن يس % % ري بليل لكنها لا تنيل % % 145(@)(@@) % كم عزيز في الحب لذلة الذل % % 146(@)(@@) % ثم من رونق النعيم قد استل % % 147(@)(@@) % شرفت حالة بها شغف الكل % % 148(@)(@@) % منتهى الحظ ما تزود منه ال % % خط والمدركون ذاك قليل % % 149(@)(@@) % هي ذات قد آظهرتنا لباسا % % 150(@)(@@) % وبنا منشأ زكت وأساسا % % PageV01P1292 151(@)(@@) % ثم يا عقل مذ تركت قياسا % % 152(@)(@@) % جاءها من عرفت يبغي اقتباسا % % وله البسط والمنى والسول % % 153(@)(@@) % نفرته عن حبها وأشمأزت % % 154(@)(@@) % وعليه من قدها الرمح هزت % % 155(@)(@@) % كل نفس همت بها واستفزت % % 156(@)(@@) % فتعالت عن المثال وعزت % % عن دنو إليه وهو رسول % % 157(@)(@@) % أخذتنا مقيدين أسارى % % 158(@)(@@) % والجوى قد أقام والصبر سارا % % 159(@)(@@) % يا ابن ودي كنا بها نتجارى % % 160(@)(@@) % فوقفنا كما عهدت حيارى % % كل عزم من دونها مخذول % % PageV01P1293 161(@)(@@) % عللتنا بما تشير الملاهي % % 162(@)(@@) % فسمعنا منها ولم ندر ما هي % % 163(@)(@@) % ثم رحنا والفكر بالشوق ساهي % % 164(@)(@@) % ندفع الوقت بالرجاء وناهي % % كم بقلب غذاؤه التعليل % % 165(@)(@@) % يا أخا الوجد من لصب أسير % % 166(@)(@@) % بين شوق نما وصبر بسير % % 167(@)(@@) % ويح قلبي في حب ظبي غرير % % 168(@)(@@) % كلما ذاق كأس يأس مرير % % جاء كأس من الرجا معسول % % 169(@)(@@) % لم يجد في هوى المهفهف صبرا % % 170(@)(@@) % وبه الشوق قد توقد جمرا % % PageV01P1294 171(@)(@@) % مغرم القلب سره صار جهرا % % 172(@)(@@) % فإذا سولت له النفس أمرا % % حيد عنه وقيل صبر جميل % % 173(@)(@@) % حرم نحن فيه والغير في الحل % % 174(@)(@@) % رح سليما ومن ملامتنا قل % % 175(@)(@@) % فإذا ما سئلت يا أيها الخل % % 176(@)(@@) % هذه حالنا وما وصل العل % % م إليه وكل حال تحول % % PageV01P1295 البحر : - 1(@)(@@) % الحمد لله لا جاه ومال % % وإنما هو علم الله والحال % % 2(@)(@@) % فلا أخاف على جاه يزول ولا % % مال عليه يد تبغى 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms255# وتحتال % % 3(@)(@@) % عندي علوم وما عندي لها أحد % % في عصرنا اليوم بين الناس حمال % % 4(@)(@@) % أبثها بين أقوام فيوهمني % % بعض بإيمانه والبعض نقال % % 5(@)(@@) % وهم يلومون في إفشائها وأنا % % أخاف تدركني بالكتم أنكال % % 6(@)(@@) % لعن من الله في القرآن جاء لمن % % أخفى بيانا له في الذكر إنزال % % 7(@)(@@) % وإنما أنا أبديها فيؤمن ذو % % هدى وينكرها من فيه إضلال % % 8(@)(@@) % يا ويحهم كلما أصغوا لها وجدوا % % قبولها فدهتهم منه أثقال % % 9(@)(@@) % فيعرضون اكتفاء بالذي فهموا % % والفهم فيها بدون الذوق بطال % % 10(@)(@@) % وغاية الأمر أن البعض ليس له % % منها على الجد إلا القيل والقال % % PageV01P1296 11(@)(@@) % عقيدتي كلها القرآن جملته % % وسنة المصطفى علم وأعمال % % 12(@)(@@) % والله لي منهما بالكشف يوضح ما % % لم تستعد له في القوم إبطال % % 13(@)(@@) % ذوق أكاد به أدرى الغيوب بلا % % دراية لكن الإيمان فعال % % 14(@)(@@) % والذل والانكسار القلب مشتمل % % عليهما دائما ما فيه إخلال % % 15(@)(@@) % وفي الأذية لي صبر ولي جلد % % وليس لي في انتظار النصر إهمال % % 16(@)(@@) % عندي التفاصيل من علم الإله ترى % % وغيرنا عنده في العلم إجمال % % 17(@)(@@) % دين هو الشرع باد والحقيقة قد % % دارت به فأحاطت وهي أحوال % % 18(@)(@@) % بر وبحر هما دين الإله فلا % % تكفر بواحدة منهن تغتال % % 19(@)(@@) % كن مؤمنا بهما إن لم يكن لهما % % فيك اقتدار فللرحمن إقبال % % 20(@)(@@) % بالشرع مؤمنهم لا بالحقيقة قل % % أو بالحقيقة لا بالشرع دجال % % PageV01P1297 21(@)(@@) % ومؤمن بهما في جنة وعلى % % لكن له عن تجلي الحق أشغال % % 22(@)(@@) % لأنه ماله ذوق يحققه % % بالحق والقلب منه فيه إغفال % % 23(@)(@@) % وصاحب الذوق سر لا يباح به % % ما عنده قط في الأشياء إشكال % % 24(@)(@@) % الله أكبر هذا الدين فهت به % % جميعه ولغيري فيه أقوال % % 25(@)(@@) % فمن يجد عنده رشدا يدين به % % أولا فذلك للباغين تمثال % % PageV01P1298 البحر : - 1(@)(@@) % الا إنما المخلوق يعرف بالعقل % % وخالقنا بالحس يعرف والنقل % % 2(@)(@@) % وهم يعرفون الله بالعقل كلهم % % كما يعرفون الخلق بالحس والشكل % % 3(@)(@@) % فلو علموا أن الذي في عقولهم % % هو الخلق بل والحق في حسهم مجلى % % 4(@)(@@) % بآياته في كل شيء منزها % % عن الشيء حيث الشيء فإن من الكل % % 5(@)(@@) % تعالى وجل الله عن كل حادث % % بذات ووصف بل وبالاسم والفعل % % 6(@)(@@) % وقد أمر الله العباد 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms256# قل انظروا % % وذلك بالعينين في النظر الأصلي % % 7(@)(@@) % وهم عدلوا عنه لأنظار عقلهم % % ودانوا كما دانت فلاسفة الخيل % % 8(@)(@@) % وما العقل إلا للمعاش فإنه % % لتدبير ملبوس وللشرب والأكل % % 9(@)(@@) % وأما الحواس الخمس فهي لربنا % % بها نشهد الآيات في العلو والسفل % % 10(@)(@@) % كما جاء في القرآن والسنة التي % % عن المصطفى بالحس تهدي ذوي العقل % % PageV01P1299 11(@)(@@) % لرؤية محسوسات آياته فخذ % % متابعة الآيات تنبتك كالبقل % % 12(@)(@@) % وتبصر فعل الله في كائناته % % وتشهدها الآيات تتلى على الوصل % % 13(@)(@@) % وذاك كلام الله والله قارئ % % كلاما قديما لا يبدء ولا فصل % % 14(@)(@@) % حروف بدت منا بأصواتنا له % % تجل عن الأصوات وإلا حرف المثل % % 15(@)(@@) % وكانت وما كنا جميعا وإنما % % هو العلم نور الذات يبديه كالظل % % 16(@)(@@) % وغيب غيوب الحق عزوجل عن % % مشابهة الأكوان والبعد والقبل % % 17(@)(@@) % ولكننا نومي إلى علمنا به % % ونعلم أن العلم منا أخو الجهل % % PageV01P1300 البحر : - 1(@)(@@) % ربي تجلى بأنواع الخلائق لي % % تجليا هو كشف القول والعمل % % 2(@)(@@) % فالقول كن فيكون اسمع مقالتنا % % فإنها لك تهدي أوضح السبل % % 3(@)(@@) % والفعل قدرته بعد الإرادة لم % % يترك من الكون شيئا غير منفعل % % 4(@)(@@) % فانظر بعقلك فيما أنت تدركه % % فإنه الخلق من عال ومنسفل % % 5(@)(@@) % وانظر إلى ربك الفعال ثم إلى % % كلامه الحق عين الأحرف الأول % % 6(@)(@@) % بالجمع قرآنه والفرق أجمعه % % فرقانه فتحقق فالمقام جلى % % PageV01P1301 البحر : - 1(@)(@@) % إن من آيات ربي هو قال % % نومكم كل نهار وليال % % 2(@)(@@) % وكذا الناس نيام قاله % % من أتى بالحق في صدق المقال % % 3(@)(@@) % وإذا ماتوا يقول انتبهوا % % ومضى عنهم به حكم الخيال % % 4(@)(@@) % فافهموا إذا القول يا أمته % % تهتدوا للحق من غير جدال % % 5(@)(@@) % كل ما أدركتموه صور % % في منام من جلال وجمال % % 6(@)(@@) % عبروه تعرفوه واجزموا % % أنه الحق تعالى ذو الجلال % % 7(@)(@@) % مطلق في نومكم تلقونه % % في قيود كلها عنه محال % % 8(@)(@@) % ماله كيف ولا كيفية % % يتجلى بنساء ورجال % % 9(@)(@@) % وكبار وصغار مثل ما % % جاء في القرآن عنه وهو قال % % 10(@)(@@) % قال إنا كل شيء فارفعوا % % لام كل خبر يتلوه تال % % PageV01P1302 11(@)(@@) % وكذا قال له ما في السم % % وات والأرض وكم قال مثال % % 12(@)(@@) % يا نياما عبروا الرؤيا به % % هو حق وسوى الحق ضلال % % 13(@)(@@) % كل شيء هالك قال وكل 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms257# % % من عليها هو فان بالزوال % % 14(@)(@@) % واقرأوا القرآن مثلي تجدوا % % كل ما قد قلته كل الكمال % % 15(@)(@@) % لا أنا أيضا ولا أنتم ولا % % كل شيء من مياه وجبال % % 16(@)(@@) % بل خيالات عقول ظهرت % % في منام وهو رب متعال % % 17(@)(@@) % إنه الله وجود واحد % % حكمه فينا حرام وحلال % % 18(@)(@@) % وهو حق وسواه باطل % % وإلى الحق رجوع ومآل % % 19(@)(@@) % وإليه ترجعون الله قد % % قال في القرآن والسبع الطوال % % 20(@)(@@) % أينما أنتم تولوا ثم وجه ال % % إله الحق محمود الفعال % % PageV01P1303 21(@)(@@) % لا تصدق أنت رؤياك كما % % للخليل القول قد كان يقال % % 22(@)(@@) % واتبع التعبير في الرؤيا تفز % % بالمنى لا بجواب وسؤال % % 23(@)(@@) % هذه الغاية في العرفان لا % % ما يقول الغير من قيل وقال % % PageV01P1304 البحر : - 1(@)(@@) % نفخ روح بالعز صار ذليلا % % دين رب مؤجل تأجيلا % % 2(@)(@@) % لترى الربح باتجارك فيه % % تفعل الخير بكرة وأصيلا % % 3(@)(@@) % فبذلت لدينا الميسر فيما % % تشتهيه ونلت حظا قليلا % % 4(@)(@@) % ثم حل الدين المؤجل حتى % % جاء يبغيه منك لا تمهيلا % % PageV01P1305 البحر : - 1(@)(@@) % أنت إنسان خيالي % % لك عقل كالعقال % % 2(@)(@@) % أنت جسم من تراب % % فيه روح متلالي % % 3(@)(@@) % أنت في أنت كثيف % % في لطيف الروح عالي % % 4(@)(@@) % ليس في الخارج شيء % % منك بل لمعة آل % % 5(@)(@@) % إنما الخارج حق % % أمر رب متعالي % % 6(@)(@@) % وكذاك الخلق طرا % % من نساء ورجال % % 7(@)(@@) % وسموات وأرض % % وبحار وجبال % % 8(@)(@@) % كلهم عنك في صف % % حة مرآة الخيال % % 9(@)(@@) % صور تبدو وتخفى % % وهو حق في المجالي % % 10(@)(@@) % فتحقق بك وافهم % % قبل محو وزوال % % PageV01P1306 11(@)(@@) % واعرف المعروف تنجو % % من تناويع الضلال % % PageV01P1307 البحر : - 1(@)(@@) % كم غادة كاملة في حسنها % % لو يدرك البدر سناها لاختبل % % 2(@)(@@) % لبستها ثوب حرير ناعم % % بكرا وزررت عليها بالقبل % % 3(@)(@@) % ولي فؤاد بالحسان مغرم % % يدكه محبوبه دك الجبل % % 4(@)(@@) % واللات والعزى ظهوران له % % بما وراهما وما ورا هبل % % 5(@)(@@) % والحب كالحب هو الأصل وما % % تبدو له الفروع إلا بالسبل % % PageV01P1308 البحر : - 1(@)(@@) % ألا فتحقق أن كل استقامة % % بغير اعوجاج ما عليها معول % % 2(@)(@@) % فإن اعوجاج القوس عين استقامة % % له في يد الرامي فلا يتحول % % 3(@)(@@) % ولما استقام السهم زال بسرعة % % عن القوس فافهم أيها المتطول % 4(@)(@@) % وقصدي بهذا الاعوجاج هو الذي % % رأته نفوس جاهلون فجهلوا % % 5(@)(@@) % ولا يفرقون الحق من باطل 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms258# السوى % % وشيطانهم يملى لهم ويسول % % 6(@)(@@) % وإلا فإن الاستقامة عين ما % % هو الشرع يسمو من بها يتجمل % % 7(@)(@@) % وما الشرع إلا والحقيقة عينه % % وبينهما لا فرق قول مفصل % % PageV01P1309 البحر : - 1(@)(@@) % صفا الوجود فلا علم ولا عمل % % وإنما الكل أوهما بها الخبل % % 2(@)(@@) % تقدير مولاك يا هذا جميعك قد % % بدافكن ذائقا قولي ولا زلل % % 3(@)(@@) % فشر وجودك أن القشر تأكله % % دواينا أنت قشر أيها الرجل % % 4(@)(@@) % وعلمنا في أولي الألباب يعرفه % % من قد تخفى بهم لما به جهلوا % % 5(@)(@@) % تبارك الله لا حق سواه ولا % % لباطل أثر يدري به البطل % % 6(@)(@@) % يا من تصفى وجود خالصا وبدا % % من قشرة إذ عليه كان يشتمل % % 7(@)(@@) % قشر هو العدم الموهوم ليس له % % أصل وما ثم سهل لا ولا جبل % % 8(@)(@@) % لما رأة الصعق موسى كان ليس هنا % % موسى وقل جبل بالدك منجبل % % 9(@)(@@) % نعم تصفيت من دعوى الوجود وقد % % فنيت فاصدق إذا ما كنت تحتمل % % 10(@)(@@) % أنت الذي هو أنت الكل أجمعهم % % لا كل لكن علينا ضافت الحيل % % PageV01P1310 البحر : - 1(@)(@@) % أنا الوجود وكل الخلق أفعالي % % والنفس أمن لم أمتها فهي أفعى لي % % 2(@)(@@) % يا مكثر اللوم في تقبيح أعمالي % % شيطان أرسلك الرحمن أعمى لي % % PageV01P1311 البحر : - 1(@)(@@) % الفعل معدوم لا يظهر بلا فاعل % % يكون عنه سعال كان من ساعل % % 2(@)(@@) % فالكل مجعول فإني خلقة الجاعل % % نور الوجود به قنديلنا شاعل % % PageV01P1312 البحر : - 1(@)(@@) % اقبل على الحق لا تقبل على الباطل % % فالحق فاعل وغيره كله العاطل % % 2(@)(@@) % والله بالوعد موفي والسوى ماطل % % والغير ما حل وربي غيثه الهاطل % % PageV01P1313 البحر : - 1(@)(@@) % الله حق وأغياره عدم باطل % % والفاعل الله ربي السوى عاطل % % 2(@)(@@) % والحق يوفى وغيره بالوفا ماطل % % والغير ما حل وربي غيثه هاطل % % PageV01P1314 البحر : - 1(@)(@@) % قل لعباد الخيال % % كم قيام في الخيال % % 2(@)(@@) % تعبدون الله معقو % % لا عليه العقل والي % % 3(@)(@@) % وهو معقول بمعنى % % خاطر فيكم ببال % % 4(@)(@@) % عندكم حصلتموه % % ببراهين طوال % % 5(@)(@@) % هي في علم كلام % % عمدة بين الرجال % % 6(@)(@@) % جادل الماضون فيه % % مع أهل الاعتزال % % 7(@)(@@) % صنفوه بخصام % % في المعاني وجدال % % 8(@)(@@) % وخيالات فهوم % % وتماثيل المثال % % 9(@)(@@) % وتصاوير وفكر % % وبقيل وبقال % % 10(@)(@@) % وهو لولا فيه سمع % % ياته محض ضلال % % PageV01P1315 11(@)(@@) % أصله العقل ومعقو % % لاته مثل العقال 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms259# % % 12(@)(@@) % أيها الأقوام كفوا % % عقلكم عن رب عالي % % 13(@)(@@) % ويحكم كم قد عبدتم % % ولد العقل المزال % % 14(@)(@@) % وشهدتم أنه الله بزور وتغالي % % 15(@)(@@) % ويحكم ما ولد العقل لرب متعالي % % 16(@)(@@) % وهو لم يولد كما قا % % ل بنص متلالي % % 17(@)(@@) % كيفما شئتم عرفتم % % ربكم مولى الموالي % % 18(@)(@@) % ويح إنسان يناجي % % صورة ذات انفعال % % 19(@)(@@) % يعبد الله الذي في % % عقله ولا يبالي % % 20(@)(@@) % وإذا قيل له رب % % ك باد في الجبال % % PageV01P1316 21(@)(@@) % وبأرض وسماء % % ورياض وظلال % % 22(@)(@@) % وبناس وبجن % وبإملاك وعجال % % 23(@)(@@) % وبكل الخلق في الأي % % أم طرا والليالي % % 24(@)(@@) % كل هذا فعل رب % % قد تجلى ذي جلال % % 25(@)(@@) % ظاهر بالفعل منه % % وهو أنواع الفعال % % 26(@)(@@) % يتجلى بالذي يب % % ديه في أهل ابتهال % % 27(@)(@@) % وهو في التنزيه عن مخ % % لوقه في كل حال % % 28(@)(@@) % قال مع إنكاره ما % % قلته يبغى جدالي % % 29(@)(@@) % يتعالى الله عما % % قلته يا ابن الحلال % % 30(@)(@@) % كل هذا هو خلق % % قلته لي باحتفال % % PageV01P1317 31(@)(@@) % جل ربي وتعالى % % عنه في كل مجال % % 32(@)(@@) % إنما الله بعقلي % % ظاهر وبخيالي % % 33(@)(@@) % وأنا أعرفه من % % قبل أيام خوالي % % 34(@)(@@) % ما درى المسكين إن الله يجلي بالمجالي % % 35(@)(@@) % ظاهر في كل شيء % % ليس يخفى بانعزال % % 36(@)(@@) % وهو حق وسواه % % باطل لمعة آل % % 37(@)(@@) % قال براهيمإ قد وجهت وجهي في سؤالي % % 38(@)(@@) % للذي فطر الأر % % ض بأنواع الفعال % % 39(@)(@@) % وكذا أصحاب كهف % % قولهم أقوى المقال % % 40(@)(@@) % ربنا رب السموا % % ت العلى السبع الثقال % % PageV01P1318 41(@)(@@) % وكذاك الأنبيا والأولياء أهل الكمال % % ليا أهل الكمال % % 42(@)(@@) % كلهم لم يعبدوا بال % % عقل ربا ذا اتصال % % 43(@)(@@) % إنما هم عبدوا رب الدراري والهلال % % 44(@)(@@) % وله شمس الضحى مخلوقة ذات انفعال % % 45(@)(@@) % خالق كل البرايا % % عن يمين وشمال % % 46(@)(@@) % خالق الفوق مع التح % % ت وما في ذاك صالي % % 47(@)(@@) % خالق القدام والخل % % ف وما في كل كالي % % 48(@)(@@) % والهوا خالقه كال % % ترب والماء الزلال % % 49(@)(@@) % خالق النار وما تح % % رقه بالإشتعال % % 50(@)(@@) % ظاهر في كل شيء % % هالك فيه وبالي % % PageV01P1319 51(@)(@@) % واقرأ القرآن وافهم % % لا تكن عنه بقالي % % 52(@)(@@) % واترك العقل لأصحا % % ب عذاب ونكال % % 53(@)(@@) % يفهمون الدين منه % % بشباك وحبال % % 54(@)(@@) % ليس هذا دين ربي % % هو من قبح الخصال % % 55(@)(@@) % دينه الحق تعالى % % ذو جمال وجلال % % 56(@)(@@) % وله الأحكام فينا % % بحرام وحلال % % 57(@)(@@) % والذي يعرض عن 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms260# أق % % والنا بالاشتغال % % 58(@)(@@) % فهو مشغول بدنيا % % ه بجاه أو بمال % % 59(@)(@@) % أو بعشق الهيف المر % % د وربات الحجال % % 60(@)(@@) % فهو مفتون وممقو % % ت ومحروم النوال % % PageV01P1320 61(@)(@@) % ما له حظ من الله ومن طيب الوصال % % 62(@)(@@) % إنما الطرد له وال % % بعد تعداد الرمال % % 63(@)(@@) % كل وقت ما تغنى % % طائر فوق التلال % % PageV01P1321 البحر : - 1(@)(@@) % يحبني وأنا المعدوم لم أزل % % أحبه وهو موجود من الأزل % % 2(@)(@@) % إنا كلانا محب واحد وهما الم % % صوران على أحوالنا الأول % % 3(@)(@@) % حق هو الله فرد دائم أبدا % % وباطل أنا مع قولي ومع عملي % % 4(@)(@@) % يا أيها الباطل المغرور تطمع أن % % ترى وجودا بلا شبه ولا مثل % % 5(@)(@@) % وإنما أنت رأي قد أضلك في % % بطلانه فاقتصروا عرض عن الجدل % % 6(@)(@@) % نعم ترى أنت نور الوجه منه بدا % % يغشى الكوائن من سهل ومن جبل % % 7(@)(@@) % الله نور السموات استمع خبرا % % والأرض عن ربنا في الذكر منه تلى % % 8(@)(@@) % وتبصر النور مرشوشا عليك كما % % جاء الحديث به عن أشرف الرسل % % 9(@)(@@) % فاجعل فناءك معراجا إليه ولا % % تكن جبانا وكن كالفارس البطل % % 10(@)(@@) % هذا مقامك في دنيا وآخرة % % واترك وجودك تقرب منه بل تصل % % PageV01P1322 11(@)(@@) % إن الوجود بدا في كل كائنة % % معدومة وهو في حق الجميع جلى % % PageV01P1323 البحر : - 1(@)(@@) % الناس موصوفون بالأفعال % % وبسائر الأقوال والأفعال % % 2(@)(@@) % من غير تأثير لهم في كل ما % % يكون من ذلك باستئصال % % 3(@)(@@) % فإن معنى أنهم قد أثروا % % أي أظهروا من عدم للحال % % 4(@)(@@) % والله وحده هو المظهر لا % % سواه في الماضي والاستقبال % % 5(@)(@@) % فإن تكن نفوسهم قد ادعت % % إظهار فعل هم على الضلال % % 6(@)(@@) % لا يظهرون من جميع ما به % % قد وصفوا فعلا من الأفعال % % 7(@)(@@) % في ظاهر أو باطن وإنما % % يظهره الخلاق ذو الجلال % % 8(@)(@@) % وكلهم خلق الإله ربنا % % مع كل الأفعال على التتالي % % PageV01P1324 البحر : - 1(@)(@@) % عن يمين الحي من إضم % % سرب غزلان تبيح دمي % % 2(@)(@@) % يا لقومي من لواحظهم % % أسرت في الحب كل كمي % % 3(@)(@@) % والوجوه الغر طالعة % % أوجدوا وجدي من العدم % % 4(@)(@@) % واستباحوا يوم جفوتهم % % مهجتي شوقا لوصلهم % % 5(@)(@@) % واستهانوا بي وقد قهروا % % ثم صالوا صول منتقم % % 6(@)(@@) % ليت لو جادوا ولو سمحوا % % لي ولو بالطيف في الحلم % % 7(@)(@@) % أيها العذال في شغفي 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms261# % % لومكم من أخبث الكلم % % 8(@)(@@) % لو شهدتم ما أشاهده % % من حبيبي ذقتمو ألمي % % 9(@)(@@) % لكن الألباب زائغة % % لا تعي والطرف عنه عمي % % 10(@)(@@) % قربوا منامسا معكم % % علكم أن تسمعوا حكمي % % PageV01P1325 11(@)(@@) % واعلموا أني نصحت لكم % % لو عقلتم ما يقول فمي % % 12(@)(@@) % غير أني في نصيحتكم % % ناثر درا على غنم % % 13(@)(@@) % كيف تصغي العاذلون لنا % % وهم الأعدا من القدم % % 14(@)(@@) % كل مغرور بغير هدى % % ربه ناش من الوهم % % 15(@)(@@) % عابد من فكره صنما % % هائم بالجهل في الصنم % % 16(@)(@@) % محض تشبيه عقيدته % % في سوى التجسيم لم يهم % % 17(@)(@@) % جاهل بالطبع لذته % % لذة الثيران والنعم % % 18(@)(@@) % وعلى تشبيهه حذر % % خائف منا عليه ظمي % % 19(@)(@@) % إن نقل تنزيه خالقنا % % قال هذا زلة القدم % % 20(@)(@@) % وإذا بالفتح فهت له % % حل مني ساحة التهم % % PageV01P1326 21(@)(@@) % يا بني قومي ومن ألفوا % % نصرتي في كل مزدحم % % 22(@)(@@) % ذاكروني في مواجدكم % % عل أن يشفى بكم سقمي % % 23(@)(@@) % واسألوا برق الحمى كرما % % عن لويلات بذي سلم % % 24(@)(@@) % هل له في عود هن لنا % % إذ له التصريف في الحرم % % 25(@)(@@) % ليت أهل المنحنى عطفوا % % لي وراعوا حرمة الذمم % % 26(@)(@@) % أغمضوا عنا لواحظكم % % قد مزجتم دمعتي بدمي % % 27(@)(@@) % واعلموا أني شغفت بكم % % وأنا من جملة الخدم % % 28(@)(@@) % هائم صب كثير جوى % % في الهوى لحم على وضم % % 29(@)(@@) % كل أحوالي بكم ظهرت % % وغرامي غير منكتم % % PageV01P1327 البحر : - 1(@)(@@) % كل دين إن فاتك الإسلام % % فمحال لأنه أوهام % % 2(@)(@@) % إن من في الوجود طوعا وكرها % % دينهم كلهم هو الإسلام % % 3(@)(@@) % ظهر الحي والعوالم موتى % % وبدا النور والجميع ظلام % % 4(@)(@@) % وفنون التجليات علينا % % كثرت والعيون عنها نيام % % 5(@)(@@) % وسرت نسمة الحمى فأسرت % % أهل ذاك العهد القديم فهاموا % % 6(@)(@@) % يا إشارات من أحب رويدا % % منك في القلب صبوة وغرام % % 7(@)(@@) % رحت منها سكران لا القوم قوم % % في عيوني ولا الخيام خيام % % 8(@)(@@) % سلمت حين أسلمت خطراتي % % وعليها من السلام سلام % % 9(@)(@@) % والذي في قلوبنا أو ثان % % والذي في عيوننا أصنام % % 10(@)(@@) % ووراء الجميع محض وجود % % هم على وجهه الجميل قتام % % PageV01P1328 11(@)(@@) % وهو مشهودنا وشاهدنا في % % شأننا حيث يقظة ومنامسقط بيت ص % % 12(@)(@@) % وأتم الأمور أنك ثوبوله منك كيف ما شاء حال وله منك كيف شئت مقام % بك تختال غادة وغلام % % 13(@)(@@) % وفؤاد المحب 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms262# إن هام وجدا % % في المعاني فإنه لا يلام % % 14(@)(@@) % ولقد جاء بالجميع ركون % % وانقياد إليه واستسلام % % PageV01P1329 البحر : - 1(@)(@@) % قضي الأمر وجف القلم % % وبدت نار الحمى والعلم % % 2(@)(@@) % ونزلنا غرب وادي سلم % % واحتوانا ضالهم والسلم % % 3(@)(@@) % يا رعى الله قبابا بقبا % % عادها عادت ورامت إرم % % 4(@)(@@) % وسقى ثم لويلات بها % % لم يضمني في هواها إضم % % 5(@)(@@) % أيها النازل في كاظمة % % لي لسان فيك حي وفم % % 6(@)(@@) % بث للجيرة عني شغفا % % لم يزل بين الحشا يضطرم % % 7(@)(@@) % وتنصت للغواني سحرا % % ربما هاجك ذاك النغم % % 8(@)(@@) % واستمع صوت حمامات اللوى % % عندما تأتي عليها الظلم % % 9(@)(@@) % هذه النشأة فيها عبر % % للورى عنها تضيق الكلم % % 10(@)(@@) % وثياب الكون شفت فشفت % % مهجة للبعد فيها ألم % % PageV01P1330 11(@)(@@) % صوت دف الجسم عالي وبه % % نفخ ناي الروح لا ينكتم % % 12(@)(@@) % وشجانا رقص بانات النقى % % حين غنتها الصبا والديم % % 13(@)(@@) % حيث كاسات الهوى دائرة % % ويلي كل وجود عدم % % 14(@)(@@) % ونسيم الأمر فينا عابق % % وأزاهير الربا تبتسم % % 15(@)(@@) % والحمى طلق وأصحاب الحمى % % لم يزالوا فيه والقوم هم % % 16(@)(@@) % والذي قد كان لا زال على % % ما به كان وتلك النعم % % 17(@)(@@) % غير أن القلب لا قلب له % % وذوو الأفكار صموا وعموا % % 18(@)(@@) % لو أزيلت عن عيون حجب % % وتنحى عن قلوب وهم % % 19(@)(@@) % لرأوا الجهل الذي حف بهم % % وعلت منهم إليه همم % % 20(@)(@@) % وبدا الكل غرورا عندهم % % ولو دوا أنهم ما علموا % % PageV01P1331 21(@)(@@) % لكن الوسواس قد آيسهم % % أن منهم ليس تحيى الرمم % % 22(@)(@@) % فتراهم وطنوا أنفسهم % % أن منهم ليس يرقى القدم % % 23(@)(@@) % قد بذلت النصح يا قوم لكم % % حسب جهدي فانجلى المنبهم % % 24(@)(@@) % وشرحت الدين شرحا واضحا % % بلسان ما اعتراه بكم % % 25(@)(@@) % وزجرت العيس منكم للسرى % % فهمو أهل المعاني فهموا % % 26(@)(@@) % نفع الله بما فهت به % % وبما أسفر عنه القلم % % 27(@)(@@) % وبخير ختم الأمر لنا % % إننا للدين نحن الخدم % % 28(@)(@@) % ولأهل الأرض طرا ولمن % % بالتقى تحفظ منه الذمم % % 29(@)(@@) % وصلاة الله مني دائما % % مع سلام منه لا ينصرم % % 30(@)(@@) % لنبي الله طه المصطفى % % ماتوا لي من إلهي كرم % % PageV01P1332 البحر : - 1(@)(@@) % حوت تعاظم فالتقم % % لهب التولع والسقم % % 2(@)(@@) % لولا أكون مسبحا % % في بطنه كان انتقم % % 3(@)(@@) % حتى إذا تمت كتا % % بة لوح صدري والرقم % % 4(@)(@@) % ألقى بساحل أمره % % كلي 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms263# وعرفني اللقم % % 5(@)(@@) % فلمحت يونس حكمة % % زالت بها عني النقم % % PageV01P1333 البحر : - 1(@)(@@) % عالم الدنيا كفجر كاذب % % إن تبدى يعقب الضوء ظلام % % 2(@)(@@) % ونهار الحشر فجر صادق % % ليس فيه إن تحققت كلام % % 3(@)(@@) % وطلوع الشمس في أفلاكها % % أن ترى ربك في دار السلام % % 4(@)(@@) % فهي أطوار ثلاث جمعت % % دائما فيك على هذا النظام % % 5(@)(@@) % فاعتبرها منك بالجسم وبالنف % % س والروح تجدها والسلام % % PageV01P1334 البحر : - 1(@)(@@) % هوى قد أذاب الروح والنفس والجسما % % فلم يبق عينا للمشوق ولا رسما % % 2(@)(@@) % وبعض اصطبار أنفقته يد النوى % % وقد حسمت دآء التسلي لنا حسما % % 3(@)(@@) % سلونا على سلمى نفوسا نفيسة % % واسما لنا لم نبق ذاتا ولا اسما % % 4(@)(@@) % هي الكنز والجسم الكثيف جدارها % % إذا جهل الداعي بها يمتلي علما % % 5(@)(@@) % وما القرب إلا البعد عنها لأنها % % على الضد منا حيث كنا بها وهما % % 6(@)(@@) % هي العقل بل وهي المعاني جميعها % % هي الحس والمحسوس إن خص أو عما % % 7(@)(@@) % فإن رمت أن تدنو إليها فكن بهاوقف عندهها واترك وقوفك تاركا لتركك تكشف عن هلال بها تما % % بعيد أودع إن رمت فهما لها فهماسقط بيت ص % % 8(@)(@@) % وإياك والإقبال بالنفس نحوها % % وإياك والأعراص عنها بها زعما % % 9(@)(@@) % وصلها بما منها ومل نحو حانها % % بميل تراه جاء من نحوها حتما % % 10(@)(@@) % وكن ناظرا آثارها بعيونها % % وإلا فعن آثارها لم تزل أعمى % % PageV01P1335 11(@)(@@) % ولا تسمع الأصوات إلا بسمعها % % فإنك إن تسمع بها تسمع الصما % % 12(@)(@@) % وناديها في الناس واستمع الندا % % تجبك رجال نحوها ألفوا الهما % % 13(@)(@@) % وحول لها عن وجه ذاتك حجبها % % ترى الشمس تهدي من سنا عقلك النجما % % 14(@)(@@) % ولا تحتفل بالكل إن ضل أوغوى % % فما فائز إلا بما خصه سهما % % PageV01P1336 البحر : - 1(@)(@@) % هوى أفنى الوجود فزال رسم % % ولا روح ولا وأبيك جسم % % 2(@)(@@) % وشخص في المحبة ماله اسم % % وهذا من جنون العشق قسم % % 3(@)(@@) % دور % % 4(@)(@@) % بما بجفون عينك من فتور % % وما بالخد من نار ونور % % 5(@)(@@) % دع الهجران واسمح بالحضور % % وهذا من جنون العشق قسم % % 6(@)(@@) % دور % % 7(@)(@@) % قوامك إن مشى يحكي العوالي % % وأنت على ملاح الكون والي % % 8(@)(@@) % أما ترثي أما ترثي لحالي % % وهذا من جنون العشق قسم % % 9(@)(@@) % دور % % 10(@)(@@) % محب قد أمات النفس قتلا % % ولم 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms264# يقبل بمن يهواه عدلا % % PageV01P1337 11(@)(@@) % وشد على خناق الجسم حبلا % % وهذا من جنون العشق قسم % % 12(@)(@@) % دور % % 13(@)(@@) % له كبد من الأشواق ذابت % % وفطنته غراما فيك غابت % % 14(@)(@@) % ونفس بعد ذلك منه خابت % % وهذا من جنون العشق قسم % % 15(@)(@@) % دور % % 16(@)(@@) % شهيد الحب تقلته العيون % % وقد منت عليه بها المنون % % 17(@)(@@) % وغير قضاء ربي لا يكون % % وهذا من جنون العشق قسم % % 18(@)(@@) % دور % % 19(@)(@@) % م شهيد الحب تقلته العيون % % وقد منت عليه بها المنون % % 20(@)(@@) % وغير قضاء ربي لا يكون % % وهذا من جنون العشق قسمه % % PageV01P1338 21(@)(@@) % دور % % 22(@)(@@) % إذا اجتمع المحب مع الحبيب % % فقد وصل البعيد إلى القريب % % 23(@)(@@) % وجاء الموت بالعجب العجيب % % وهذا من جنون العشق قسم % % PageV01P1339 البحر : - 1(@)(@@) % سلم إن جئت أرض وادي سلم % % واقصد قوما على يمين العلم % % 2(@)(@@) % واشرح وجدي لهم عسى أن يرثوا % % أني فيهم مزجت دمعي بدمي % % PageV01P1340 البحر : - 1(@)(@@) % غب عن وجودك ترى في وسط قلبك رسم % % به حبيبك قسم لك من شهوده قسم % % 2(@)(@@) % واخرج عن الفكر واحسم داء فكرك حسم % % واعلم بأن التفكر من بقايا الرسم % % PageV01P1341 البحر : - 1(@)(@@) % بقاب قوسين قم يا صاح وارمي سهم % % إن كنت مقدام في حرب الأعادي شهم % % 2(@)(@@) % وافهم عانيم حروف الخلق أقوى فهم % % وارفع قناع الحجى واخرق حجاب الوهم % % PageV01P1342 البحر : - 1(@)(@@) % أمي جميع المقل يا مقلتي أمي % % في رؤية الحب من قاري ومن أمي % % 2(@)(@@) % ولا تؤمى السوى والغير بل أمي % % أبى الذي تعرفي من قبل أو أمي % % PageV01P1343 البحر : - 1(@)(@@) % إن عين الوجود ليس تنام % % فتأمل ما تظهر الأيام % % 2(@)(@@) % وفم الكائنات ينطق لكن % % نحن قوم أسماعنا الأفهام % % 3(@)(@@) % ولنا في معارج القرب حال % % ولنا في ذرى الكمال مقام % % 4(@)(@@) % والمعالي والفخر والمجد فينا % % والمزايا والعز والاحتشام % % 5(@)(@@) % وبنا تعرف المعارف حتى % % يستبين الضيا ويخفى الظلام % % 6(@)(@@) % والرجال الرجال منا وعنا % % يحفظ النثر في الهدى والنظام % % 7(@)(@@) % وإلينا مراتب الفضل تعزى % % في البرايا وينسب الإكرام % % 8(@)(@@) % كل علم نفيده ذاك علم % % وكلام نقول ذاك الكلام % % 9(@)(@@) % والذي عندنا يقين وحق % % والذي عند غيرنا أوهام % % 10(@)(@@) % وعلينا من المهيمن عين % % من رعته فإنه لا يضام % % PageV01P1344 11(@)(@@) % وكفى المنكرين حرمانهم عن % % وردنا العذب حيث زاد الأوام % % 12(@)(@@) % وبهم حيرة وفرط اندهاش 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms265# % % إن رأونا وقد علاهم قتام % % 13(@)(@@) % هذه حالهم ونحن على ما % % نحن فيه لا نرعوي والسلام % % PageV01P1345 البحر : - 1(@)(@@) % حق بدا في صورة الموهوم % % لما تسمى فيه بالقيوم % % 2(@)(@@) % وتتابعت أوصافه وترادفت % % أسماؤه في انفس وجسوم % % 3(@)(@@) % وتبينت أفعاله فتعاكست % % أحكامها في أمره المحكوم % % 4(@)(@@) % نحن الكواكب في سموات الهدى % % نرمي شياطين العدى برجوم % % 5(@)(@@) % صور شربناها حلاوة كوثر % % والجاهلون تعب من زقوم % % 6(@)(@@) % قرأوا الوجود وساوسا وزخارفا % % وشكوك أوهام وقبح فهوم % % 7(@)(@@) % ولقد قرأناه صحائف نشرت % % بالحق بين معارف وعلوم % % 8(@)(@@) % ظل ظليل للذين به اهتدوا % % وعلى الذين جفوه من يحموم % % 9(@)(@@) % ضاءت سموات القلوب بشمسنا % % وعلى الورى كانت طلوع نجوم % % 10(@)(@@) % والآن نوبته انقضت بظهورنا % % وخصوصنا مستجمع لعموم % % PageV01P1346 11(@)(@@) % أزل له ما قبلنا ولنا به % % أبدو ليس الفرق غير رسوم % % 12(@)(@@) % نحن الذين يضيء نور علومنا % % بين الورى في غيبة المعصوم % % 13(@)(@@) % الله أكبر ما أعز مقامنا % % وأجل وافر حظنا المقسوم % % PageV01P1347 البحر : - 1(@)(@@) % على رغم أنف الحاسدين مقامي % % وما الكل إلا خادمي وغلامي % % 2(@)(@@) % أنا النور أبدو في الزيادة كلما % % تقابلني منها العدى بظلام % % 3(@)(@@) % وأمسيت طودا في البرية شامخا % % وأصبحت بحرا في الحقيقة طامي % % 4(@)(@@) % وعندي علوم لو وجدت لها وعا % % لأفرغتها فيه بحسن كلامي % % 5(@)(@@) % ولكن صدور الكون ضاقت فلم تجد % % مساغا لقولي فانثنت بملام % % 6(@)(@@) % أبي الفرد إلا أن أكون بعلمه % % أنا الفرد حقا والخواص عوامي % % 7(@)(@@) % وما زلت يقظانا لسر فهمته % % وأهل زماني عند أسر منام % % 8(@)(@@) % أكلت لبوب الاهتدا وتركتهم % % على قشرها غرثى البطون ظوامي % % PageV01P1348 البحر : - 1(@)(@@) % فؤادي قد أضربه الغرام % % 2(@)(@@) % وجسمي قد تناهبه السقام % % 3(@)(@@) % فيا من قد سهرت بهم وناموا % % 4(@)(@@) % لغير جمالكم نظري حرام % % وغير كلامكم عندي كلام % % 5(@)(@@) % سمعت من العواذل كل لوم % % 6(@)(@@) % وكنت عن السوى في حال صوم % % 7(@)(@@) % سعدنا أن رأيناكم بنوم % % 8(@)(@@) % وعمر النسر معكم بعض يوم % % وساعة غيركم عام فعام % % 9(@)(@@) % جرى منكم لموعدنا مطال % % 10(@)(@@) % فليت بكم يكون لنا وصال % % PageV01P1349 11(@)(@@) % وكم هجر أراه وكم دلال % % 12(@)(@@) % وصبري عنكمو شيء محال % % ومالي قاتل إلا الفطام % % 13(@)(@@) % لشمس جمالكم سترت غيومي % % 14(@)(@@) % فأوصافي بها أنا في غموم % % 15(@)(@@) % ويا من قد أنيط بهم علومي % % 16(@)(@@) % إذا عاينتكم زالت همومي % % وإن غبتم دنا 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms266# مني الحمام % % 17(@)(@@) % تذكركم أهاج بنار سيسا % % 18(@)(@@) % وأسكرنا فأشبه خندريسا % % 19(@)(@@) % وهل ألقى سواكم لي أنيسا % % 20(@)(@@) % أود بأن أكون لكم جليسا % % وينصب لي بربعكمو خيام % % PageV01P1350 21(@)(@@) % على ليل الجفا منوا بفجر % % 22(@)(@@) % وكفوا بالعطا عن فرط حجر % % 23(@)(@@) % وإن رمتم بأن تحظوا بأجر % % 24(@)(@@) % فداووا بالوصال مريض هجر % % يهيم بكم إذا جن الظلام % % 25(@)(@@) % هنا صب متى وافى نسيم % % 26(@)(@@) % يهيج به لكم وجد مقيم % % 27(@)(@@) % ومشتاق له صبر عديم % % 28(@)(@@) % حديث غرامه فيكم قديم % % وملبسه من الحب السقام % % 29(@)(@@) % لنوع من محبتكم وفصل % % 30(@)(@@) % رمينا من لواحظكم بنصل % % PageV01P1351 31(@)(@@) % عسى ولعل منكم بعض وصل % % 32(@)(@@) % فأنتم للوجود أجل أصل % % إذا شئتم تحصل لي المرام % % 33(@)(@@) % بكم علم السوى قد صار جهلا % % 34(@)(@@) % ولست أرى لكم في الكون أهلا % % 35(@)(@@) % متى منكم يذوق الصب نهلا % % 36(@)(@@) % بكم صعب الأمور يعود سهلا % % فبالإحسان جودوا يا كرام % % 37(@)(@@) % شربت شرابكم طفلا وكهلا % % 38(@)(@@) % وعانيت الهوى صعبا وسهلا % % 39(@)(@@) % فمهلا يا كرام الحي مهلا % % 40(@)(@@) % وليس سواكموا للجود أهلا % % فكيف نزيل ساحتكم يضام % % PageV01P1352 البحر : - 1(@)(@@) % أتعبتني بقر الشام % % وهي في نقض وإبرام % % 2(@)(@@) % واعنائي كم أعلمهم % % ثم ألقى جهلهم نامي % % 3(@)(@@) % زبلهم في الماء صيرهم % % شربه من غير أفهام % % 4(@)(@@) % لم يرقوا بالمواعظ إذ % % ماؤهم من حجر هامي % % 5(@)(@@) % كلهم لا يعرفون سوى % % قبح أفعال وآثام % % 6(@)(@@) % بطنهم والفرج أهلكهم % % مثل ثيران وأنعام % % 7(@)(@@) % فتراهم لا عقول لهم % % إنما هم أسر أوهام % % 8(@)(@@) % عصبة البهتان ضلوا ولم % % يختشوا زلات أقدام % % 9(@)(@@) % في قد زادت وساوسهم % % وابتلوا في داء برسام % % 10(@)(@@) % فلذا هم يخلطون بنا % % فرط تحقير بإكرام % % PageV01P1353 11(@)(@@) % بعضهم للبعض متبع % % حذو أقدام بأقدام % % 12(@)(@@) % حاولوا بالاستهانة أن % % يخفضوا مرفوع أعلامي % % 13(@)(@@) % وأرادوا في تعنتهم % % أن يذلوا قدري السامي % % 14(@)(@@) % ويهينوني ويحتقروا % % علم تحقيقي والهامي % % 15(@)(@@) % ولقد خاضوا ولم يخفوا % % غرقا في بحري الطامي % % 16(@)(@@) % والإله الحق مطلع % % بأموري خير علام % % 17(@)(@@) % قادر في الحال يأخذهم % % بي على قهر وإرغام % % 18(@)(@@) % ما أنا من جنسهم وبنو % % آدم هم مثل أصنام % % 19(@)(@@) % فكأني بينهم وأنا ال % % عربي من نسل أعجام % % 20(@)(@@) % ينكروني كلما جهلوا % % فيزيد الله إنعامي % % PageV01P1354 21(@)(@@) % وأنا من خبث عصبتهم % % بين عذال ولوام % % 22(@)(@@) % مولدي فيهم ولا عجب % % جوهر في صدف كامي % % 23(@)(@@) % لست منهم لانفرادي في 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms267# ال % % بيت عنهم منذ أعوام % % 24(@)(@@) % قسوة فيهم وفرط جفا % % لم يخف مرميهم رامي % % 25(@)(@@) % وابتلوا بالبغي من حسد % % مثل أمراض وأسقام % % 26(@)(@@) % قد أتى في مسند ابن عدي % % خبر عن جل أقوام % % 27(@)(@@) % قال خير الخلق سيدنا % % الجفا والبغي في الشام % % PageV01P1355 البحر : - 1(@)(@@) % علم عظيم النفع للعالم % % جل عن المفهوم والفاهم % % 2(@)(@@) % وكيف لا ينكر وهو الذي % % يجهله إبليس في آدم % % 3(@)(@@) % حتى أبى عن أن يرى ساجدا % % لربه من قوة الواهم % % 4(@)(@@) % والتبس الأمر عليه ولم % % يقدر على التمييز في العالم % % 5(@)(@@) % كم عدم أخفى وجودا وكم % % من زائل غطى على دائم % % 6(@)(@@) % يا ويحه والنهر في داره % % من حائر صادي الحشى حائم % % 7(@)(@@) % وكل ذا من قسوة عنده % % وحسد في نفسه قائم % % 8(@)(@@) % لم يسلم الأمر إلى ربه % % ولم يشاهد حكمة الحاكم % % 9(@)(@@) % وعاند الخالق في خلقه % % معترضا سيف القضا القاسم % % 10(@)(@@) % فاحذروه واحذر أن تحاكي له % % ترجع بحال الخاسر النادم % % PageV01P1356 11(@)(@@) % يا أيها الإنسان قم وانتبه % % من لي بهذا الغافل النائم % % 12(@)(@@) % ويحك قد أشقى إله الورى % % إبليس من أجلك يا آدمي % % 13(@)(@@) % فكن سعيدا أنت واسبق إلى % % نيل العلى واعرض عن اللائم % % 14(@)(@@) % وكتب محيي الدين طالع لها % % بخاطر عن غيرها صائم % % 15(@)(@@) % معتقدا في حقها قاطعا % % بأنها دين أبي القاسم % % 16(@)(@@) % ولا تكن في ذاك مستعملا % % علوم رسم للبنا هادم % % 17(@)(@@) % فإن محيي الدين شمس الهدى % % وهو الإمام العارف الحاتمي % % 18(@)(@@) % عليه رضوان من الله ما % % تنعم المرحوم بالراحم % % PageV01P1357 البحر : - 1(@)(@@) % في كل جنس من الأجناس معلوم % % لابد من خادم فيهم ومخدوم % % 2(@)(@@) % وثالث هو بالإفساد بينهما % % يسعى بعقل من الخيرات معدوم % % 3(@)(@@) % وكل طائفة تخشى أفاضلهم % % تبدو أراذلهم بالقبح والشوم % % 4(@)(@@) % فكم رايت أناسا لا خلاق لهم % % وظالما ظاهر في زي مظلوم % % 5(@)(@@) % وكم بليت بأقوام سواسية % % في حكم أمر بعين الحس موهوم % % 6(@)(@@) % وكم عرفت بربي مشكلا قصرت % % عنه لعقول عقول العرب والروم % % 7(@)(@@) % وليس من يأكل الأكوان عذب جنى % % كمثل آكلها أشجار زقوم % % 8(@)(@@) % كل امرئ عقله ميزان حالته % % فليس صوت هزار الدوح كالبوم % % 9(@)(@@) % كلامنا الحق لا تخفى فوائده % % إلا على منكر للحق محروم % % 10(@)(@@) % به نخاطب أهل الاتفاق على % % سر عظيم 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms268# من الأسرار مكتوم % % PageV01P1358 11(@)(@@) % هم المراد به لا غيرهم أبدا % % بالقول في كل منطوق ومفهوم % % 12(@)(@@) % من العلوم وسلوى الغير أهلهما % % في الشكل من عصبة القثاء والثوم % % 13(@)(@@) % أبو هريرة حيث الاختلاف رأى % % في الحق ما بين ممددوح ومذموم % % 14(@)(@@) % لو قال ما عنده من علم خالقه % % عن النبي دهاه قطع بلعوم % % 15(@)(@@) % ومثله شعر زين العابدين أتى % % يا رب جوهر علم قول منظوم % % 16(@)(@@) % فتترك القاصرون الخوض في كلمي % % هم أهل عقل من الأغيار مكلوم % % 17(@)(@@) % ونحن قلنا عن السر المصون وعن % % نطق الوجود وأمر منه معلوم % % 18(@)(@@) % لا عن خيال ولا فكر وشاهده % % كنت اللسان له في قرب قيوم % % PageV01P1359 البحر : - 1(@)(@@) % يعلم الحق نفسه بالذي قد % % علم العبد نفسه عندما هم % 2(@)(@@) % وبه الحق يعلم العبد والعب % % د به صار يعلم الحق فافهم % % 3(@)(@@) % نسب أربع وهن لشيء % % واحد أين من لها يتفهم % % 4(@)(@@) % وبها كل نسبة ظهرت في % % كل عقل إيان أنجد أتهم % % 5(@)(@@) % وهي ذات لديك وهي ذوات % % فتحقق بها ولا تتوهم % % 6(@)(@@) % أربع مثل ما دللتك فاسلك % % منهج الصدق إنما الله ألهم % % 7(@)(@@) % واشرب الغيب بالشهادة مزجا % وكل الكل من إنائك وانهم % % 8(@)(@@) % واستمع أيها الجهول كلامي % % إن عندي لداء جهلك مرهم % % 9(@)(@@) % هي أنت الذي له وحدة الذا % % ت وبالوصف كثرة فتفهم % % 10(@)(@@) % وهي عين غلت وعزت وجلت % % عن سواها فأمرها عنك مبهم % % PageV01P1360 11(@)(@@) % ألبست غيرها على كل عقل % % وهي لا غيرها وذو اللب يفهم % % 12(@)(@@) % ورأينا شئونها ولكل % % وجهة حيثما تفاض وتلهم % % 13(@)(@@) % عبد ذات وعبد وصف وعبد ال % % وهم والفهم ثم عبد الدرهم % % 14(@)(@@) % واعتبر أوهن البيوت لبيت ال % % عنكبوت الذي لعقلك أوهم % % 15(@)(@@) % هذه لمحة من العلم بالذا % % ت لها أوضح التجلي وأبهم % % 16(@)(@@) % سكنت ديرها الأكابر منا % % وانجلى كاسها على كل ملهم % % 17(@)(@@) % فاعتقل رمحها الطويل إليها % % واقتحمها واركب من الليل أدهم % % 18(@)(@@) % طف بها كعبة وقبل سناها % % حجرا والتزم بها كل أشهم % % 19(@)(@@) % واستهمها حظا ودع كل حظ % % فلها الحق كل شيء أسهم % % 20(@)(@@) % إنها ما همو الجميع عليه % % وتغنى الهزار والليث همهم % % PageV01P1361 البحر : - 1(@)(@@) % قلبي بني فيه الهوى بيت الجمالص حجوا يا عشاقص من كل الآفاق % % 2(@)(@@) % حولي 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms269# طوفواص وارموا جمري في الوادي % % وادي الأمانيص وحجكم قام % % 3(@)(@@) % دور % % 4(@)(@@) % يا طلعة الوجه المنير بالكمالص إنني مشتاق صوافر الأشواق % % 5(@)(@@) % لي لم يوفواص من لقياهم ميعادي % % أهل المعانيص قلبي بهم هام % % 6(@)(@@) % دور % % 7(@)(@@) % فاكشف بنور الحق أستار الخيالص وافتح الأغلاقص واقرأ الأوراق % % 8(@)(@@) % ذا المعروفص واسمع رنات الحادي % % فالوصل دانيص وطابت الشام % % 9(@)(@@) % دور % % 10(@)(@@) % واستجلي هذا الكأس في جنح الليالص إن خمري راقص زائد الإشراق % % PageV01P1362 11(@)(@@) % فالمخطوفص قلبي هذاك الصادي % % لما يعانيص بحر الهوى الطام % % 12(@)(@@) % دور % % 13(@)(@@) % عيني التي قد شاهدت وجه الحبيبص مكشوف الأستارص شعاع الأنوار % % 14(@)(@@) % حتى صارتص تعطي للغير الأسرار % % يوم التلاقيص من فرط إنعام % % 15(@)(@@) % دور % % 16(@)(@@) % وكوشف القلب بذا العلم الغريبص زادت الأطوارص حارت الأفكار % % 17(@)(@@) % لما طارتص عنا أطيار الأغيار % % والقلب راقيص في أوج إسلام % % 18(@)(@@) % دور % % 19(@)(@@) % ثم الصلاة والسلام من قريبص للهادي المختارص العالي المقدار % % 20(@)(@@) % من قد سارتص لما ناداها الأشجار % % وهو الواقيص بجوده العام % % PageV01P1363 21(@)(@@) % دور % % 22(@)(@@) % ما طاب من عبد الغني الصدر الرحيبص في نظم الأشعارص بالمدح المعطار % % 23(@)(@@) % أو قد دارتص أفلاك وقت الأسحار % % وطاب ساقيص بطيب إنعام % % PageV01P1364 البحر : - 1(@)(@@) % ظهرت يا نور والسوى عدم % % فأشرقت من ظهورك الظلم % % 2(@)(@@) % وبان سر الحدوث في صور % % بها عليها تلبس القدم % % 3(@)(@@) % وموج بحر الوجود مختلف % % وهو الكتاب المبين والكلم % % 4(@)(@@) % لنا إلى الحق نسبة ظهرت % % بها يكون النعيم والألم % % 5(@)(@@) % يا أمة النور هذه رتب % % تبدو بها الذات ثم تنكتم % % 6(@)(@@) % نحن وأنتم وأنتما وهما % % وهن وهو الجميع قل وهمو % % 7(@)(@@) % وليس إلا الوجود صادرة % % شئونه عنه منه تنقسم % % 8(@)(@@) % وجه له باعتبارها ويد % % كذاك عين وصورة وفم % % 9(@)(@@) % وكل ما جاءت النصوص به % % والحكم منه اقتضاه والحكم % % 10(@)(@@) % قف عندها يا حجاب حضرتها % % مدادها عنه أنت مرتسم % % PageV01P1365 11(@)(@@) % وكن بها لا بغيرها ولها % % لا لسواهها يزول منبهم % % 12(@)(@@) % واعلم بأن الوجود هاهوذا % % وما سواه فإنه عدم % % 13(@)(@@) % يكشف عن ذاته ويظهرها % % له ويعطيك غيره الوهم % % 14(@)(@@) % وهو على نفسه به وله % % يكتبنا فوق لوحه القلم % % 15(@)(@@) % وليس فيما مضى وما هو في % % مستقبل غيره هم التهم % % 16(@)(@@) % الله الله يا موحده % % فإنه محسن ومنتقم % % 17(@)(@@) % وكن له خائفا ومرتجيا % % تمض البلايا 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms270# وتقبل النعم % % 18(@)(@@) % ولا تجد غيره تجده به % % فغيره الجهل منك واللمم % % 19(@)(@@) % من ذل للغير فهو عابده % % وذلك الغير عنده صنم % % PageV01P1366 البحر : - 1(@)(@@) % إن كنت نائم % % فالله قائم % % 2(@)(@@) % أو كنت فاني % % فالحق دائم % % 3(@)(@@) % حبيب قلبي % % رفقا بهائم % % 4(@)(@@) % من فيك حاروا % % فهم بهائم % % 5(@)(@@) % وكيف تخفى % % على الملائم % % 6(@)(@@) % وفيك هامت % % أولوا العزائم % % 7(@)(@@) % ومنك زادت % % لهم غنائم % % 8(@)(@@) % وفي الهوى أن % % فقت كرائم % % 9(@)(@@) % وأنت روض % % وهم نسائم % % 10(@)(@@) % وأنت غصن % % وهم حمائم % % PageV01P1367 11(@)(@@) % وأنت شمس % % وهم غمائم % % 12(@)(@@) % بلا رؤوس % % لهم عمائم % % 13(@)(@@) % وكل صب % لقاك رائم % % 14(@)(@@) % وكل طرف % % عليك حائم % % 15(@)(@@) % وكل حب % له علائم % % 16(@)(@@) % ومنه لا تنفع التمائم % % 17(@)(@@) % والقلب ممن % % سواه صائم % % 18(@)(@@) % فليس يصغى % % إلى اللوائم % % 19(@)(@@) % وفي بحار ال % % غرام عائم % % 20(@)(@@) % وبرق ذات ال % % مليح شائم % % PageV01P1368 21(@)(@@) % يمشي ولكن % % بلا قوائم % % 22(@)(@@) % وجوده قد % % محا الجرائم % % 23(@)(@@) % ولطفه للص % % با يلائم % % 24(@)(@@) % وتارة يش % % به السمائم % % 25(@)(@@) % والغير في أر % % ضه نعائم % % 26(@)(@@) % وهو الربا وال % % ورى سوائم % % PageV01P1369 البحر : - 1(@)(@@) % إنني قد شفني السقم % % 2(@)(@@) % ووجودي فيكمو عدم % % 3(@)(@@) % فالبقايا سادتي لكمو % % 4(@)(@@) % أنتم المقصود لا العلم % % وأهيل الحي قد علموا % % 5(@)(@@) % ليت دمعي حين أرسله % % 6(@)(@@) % ذكر كم بالقرب أوصله % % 7(@)(@@) % وفؤادي شفه الوله % % 8(@)(@@) % كيف أخفى والغرام له % % شاهدان الدمع والسقم % % 9(@)(@@) % لم أزل بالله في همم % % 10(@)(@@) % في وجود كنت أو عدم % % PageV01P1370 11(@)(@@) % فإلى كم مقتضى ألمي % % 12(@)(@@) % يا أصيحابي بذي سلم % % من أصحيابي وما السلم % % 13(@)(@@) % فنيت روحي بلا مهل % % 14(@)(@@) % مثل برق لاح في طلل % % 15(@)(@@) % يا أخلائي بلا عذل % % 16(@)(@@) % أنا عني اليوم في شغل % % فاذكروني أن نسيتكمو % % 17(@)(@@) % قد تساوى بالصفا كدري % % 18(@)(@@) % وحبيبي غير مستتر % % 19(@)(@@) % فاشهدوا يا سادتي أثري % % 20(@)(@@) % وأشيعوا في الحمى خبري % % وأذيعوا السر واكتتموا % % PageV01P1371 21(@)(@@) % صرت في الأعتاب مرتميا % % 22(@)(@@) % وإلى الأحباب منتميا % % 23(@)(@@) % وإذا ما كنت مهتديا % % 24(@)(@@) % لا يراني الحب منثنيا % % بعدما لاحت لي الخيم % % 25(@)(@@) % عالم الدنيا دجى ظلم % % 26(@)(@@) % نوره حق لمفتهم % % 27(@)(@@) % كم وجود لي وكم عدم % % 28(@)(@@) % كنت قبل اليوم في حلم % % وتقضى ذلك الحلم % % 29(@)(@@) % ما لأشواقي لكم سبب % % 30(@)(@@) % فالورى نائي ومقترب % % PageV01P1372 31(@)(@@) % ساكن حالي ومضطرب % % 32(@)(@@) % فزماني كله طرب % % دونه الأوتار والنغم % % 33(@)(@@) % شق روحي غيم جثته % % 34(@)(@@) % وبدا في نور نشأته % % 35(@)(@@) % واختفى كوني بظلمته % % 36(@)(@@) % وحبيبي من لبهجته 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms271# % % أنا والأشواق نحتكم % % 37(@)(@@) % يا هنا قلبي ويا طربي % % 38(@)(@@) % وانعدامي ليس بالعجب % % 39(@)(@@) % لاح نوري واختفت حجبي % % 40(@)(@@) % كلما وليت يقبل بي % % وإذا قطبت يبتسم % % PageV01P1373 البحر : - 1(@)(@@) % فؤاد له في رتبة الحب ما نوى % % 2(@)(@@) % وبالقرب نيم بدلت ساعة النوى % % 3(@)(@@) % وصحب عليهم حاكم العقل قد حوى % % 4(@)(@@) % يقولون لي ضيعت عمرك في الهوى % % وما فاتني شيء إذا كنت ألقاكم % % 5(@)(@@) % أحباي إني المستهام المجرد % % 6(@)(@@) % وأنتم كرام ما على يدكم يد % % 7(@)(@@) % ووالله ما لي في يميني تردد % % 8(@)(@@) % لئن كان قوم بالزوايا تقيدوا % % فإني أرى كل الوجود زواياكم % % PageV01P1374 البحر : - 1(@)(@@) % شموس الجمال تزيل الظلم % % وتهدي إلى الحق أهل الهمم % % 2(@)(@@) % شخوص إليها عيون الأمم % % وجود له صور من عدم % % 3(@)(@@) % دور % % 4(@)(@@) % بدا وجه سلمى وزال النقاب % % وقد جئت منها إليها كتاب % % 5(@)(@@) % وقد لاح ذاك الجمال المهاب % % لعيني وراحت ستور الوهم % % 6(@)(@@) % دور % % 7(@)(@@) % ألا يا حداة المطايا قفوا % % لقلبي بذاك الحمى موقف % % 8(@)(@@) % وعشقي هو الخمر والقرقف % % لأهل القلوب بحور الكرم % % 9(@)(@@) % دور % % 10(@)(@@) % هي الكل والكل عنها بدا % % وقد حجبت عن عيون العدى % % PageV01P1375 11(@)(@@) % وأهل الضلال وأهل الهدى % % مظاهر أسرارها والحكم % % 12(@)(@@) % دور % % 13(@)(@@) % وأزكى الصلاة وأبهى السلام % % على المصطفى خير كل الأنام % % 14(@)(@@) % به زاد عبد الغني في النظام % % لطائف معنى تزيل الألم % % PageV01P1376 البحر : - 1(@)(@@) % يا طالبا للحجر المكرم % % وراغبا في اسم الإله الأعظم % % 2(@)(@@) % وسائلا عن صنعة الأكسير كن % % محققا لما أقول وافهم % % 3(@)(@@) % فإنها ثلاثة مشهورة % % عند الورى مثل الطراز المعلم % % 4(@)(@@) % حارت عقول الناس في إدراكها % % كم عربي تائه وأعجمي % % 5(@)(@@) % وما اهتدوا منها إلى شيء ولا % % فاز بها سوى الشجاع الضيغم % % 6(@)(@@) % مشوا إليها في سوى طريقها % % وحاولوها بالخيال المظلم % % 7(@)(@@) % يعرفها من نفسه كل امرئ % % بحسن تقواه بلا تفهم % % 8(@)(@@) % فالحجرا لمكرم الذي متى % % تجده تظفر بالمنى وتغنم % % 9(@)(@@) % أمر بسيط ماله تركب % % جوهره صافي يرى كالعندم % % 10(@)(@@) % يثبت بالتدريج في ترابه % % شيئا فشيئا كنبات الكركم % % PageV01P1377 11(@)(@@) % تلقى على الأجزاء جزءا منه إن % % أردت يقلبها إليه فاعلم % % 12(@)(@@) % ويستحيل الكل شمسا خالصا % % أو قمرا به كماء أو دم % % 13(@)(@@) % فالشمس إن أوصلته لأصله % % بالغسل والتخليص والتنعم % % 14(@)(@@) % وإن تركت لبه في قشره % % فالقمر الأبيض بسام الفم % % 15(@)(@@) % وركب الإكسير 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms272# إن أردت من % % نون وميم مطلق وملجم % % 16(@)(@@) % وأمزجهما معا بأيد منهما % % ممدودة كدرجات السلم % % 17(@)(@@) % والاسم في الرسم من الغيب بدا % % مسلطا عليك مثل الطلسم % % 18(@)(@@) % بالهاء والواو به هوية % % في ملكوت واضح ومبهم % % 19(@)(@@) % واعرف حروفه التي أنت بها % % مثلث الشكل إليها تنتمي % % 20(@)(@@) % حققه واحفظ لفظه وادع به % % وأنت في كعبته والحرم % % PageV01P1378 21(@)(@@) % تجده في الحال مجيبا بالذي % % تريد من نصيبك المنقسم % % 22(@)(@@) % واستعمل الصدق له وسيلة % % ولا تكن عنه بما رمت عمي % % PageV01P1379 البحر : - 1(@)(@@) % لا تأخذ الخلاق يا قوم % % في خلقه سنة ولا نوم % % 2(@)(@@) % فالروح تأخذها به سنة % % والجسم نوم فيه مرغوم % % 3(@)(@@) % والله عن روح وعن جسد % % فد جل لا يحكيه مفهوم % % 4(@)(@@) % ما في سموات له وه % % ي الأرواح قيدوم فقيدوم % % 5(@)(@@) % وكذاك ما في الأرض وهي له % % أعني الجسوم وذاك مرسوم % % 6(@)(@@) % وهو المميت لأنه أبدا % % حي على الأكوان قيوم % % 7(@)(@@) % فإذا أمات أباننا وإذا % % أحيا خفينا وهو معلوم % % 8(@)(@@) % في آية الكرسي لنا عبر % % منه كتاب جاء مرقوم % % 9(@)(@@) % حق بحق فيه حققنا % % وما سواه فهو موهوم % % 10(@)(@@) % به شرابي كوثر عذب % % وشراب أهل الجهل زقوم % % PageV01P1380 البحر : - 1(@)(@@) % لم يفه ياذا الوجود فم % % بك لولا إنني العدم % % 2(@)(@@) % فالتفت وانظر لأصلك لا % % تفتخر يلحق بك الندم % % 3(@)(@@) % إن ربي عند قدرته % % تستوي الأنوار والظلم % % 4(@)(@@) % وعطاياه بلا علل % % وكذا الحرمان والنعم % % 5(@)(@@) % ما استحق المرؤ مرتبة % % هو فيها أيها الفهم % % 6(@)(@@) % ما اقتضت نفس عطيتها % % بل عطاياه لنا كرم % % 7(@)(@@) % ما اقتضى القبح القبيح ولا % % يقتضي الحرمان منحرم % % 8(@)(@@) % بل بمحض الاختيار على % % كل ذي رأس له قدم % % 9(@)(@@) % وجميعا أسر قبضته % % منعم طورا ومنتقم % % PageV01P1381 البحر : - 1(@)(@@) % تقول الأجانب عن علمنا % % وعنا مقالة واهي الفهوم % % 2(@)(@@) % لماذا ترون السماع الذي % % بآلاته طارد للهموم % % 3(@)(@@) % فقلنا لهم ما رأى المصطفى % % رأيناه فلينزجر من يلوم % % 4(@)(@@) % وقالوا تسبح قلنا نعم % % نسبح عوام بحر العلوم % % 5(@)(@@) % وأما الذي هو غربها % % فيغرق في بحرها لا يعوم % % PageV01P1382 البحر : - 1(@)(@@) % ظهر الوجود من العدم % % وبدا الحدوث من القدم % % 2(@)(@@) % وتفصلت أسماء من % % بالوجه أجمل والقدم % % 3(@)(@@) % وانهد ما بنت العقو % % ل من المعاني وانهدم % % 4(@)(@@) % وتبدل الشخص الذي % % قد كان من لحم 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms273# ودم % % 5(@)(@@) % وقد استحال جميعه % % نورا فأوقع في الندم % % 6(@)(@@) % وتداخل المخدوم في % % وصف المحاسن والخدم % % 7(@)(@@) % وتقاصر القصر المشيد وبار بئر وارتدم % % PageV01P1383 البحر : - 1(@)(@@) % أني أنا المعنى القديم % % إني أنا النبأ العظيم % % 2(@)(@@) % وأنا هو السر الخفي % % وأنا الصراط المستقيم % % 3(@)(@@) % والحق بي هو عالم % % وبنفسه فهو العليم % % 4(@)(@@) % والذات لا معنى لها % % تلك الوجود هي القديم % % 5(@)(@@) % فإذا عرفت فإنما % % معنى لمعنى مستديم % % 6(@)(@@) % هو نزلة أخرى له % % قمنا بها وهو المقيم % % 7(@)(@@) % ولقد رآه بها الذي % % هو فضله فينا العميم % % 8(@)(@@) % يا جوهرا لا جوهر % % لكنه وصف كريم % % 9(@)(@@) % قامت به أعراضه % % وبطيبه جاء النسيم % % 10(@)(@@) % حرنا فقلنا هكذا % % والذات غيب يا فهيم % % PageV01P1384 11(@)(@@) % غيب الغيوب تنزهت % % عما القلوب به تهيم % % 12(@)(@@) % أنا إليك نشير لا الموجود نحن بل العديم % % 13(@)(@@) % والحق ليس عبارة % % مناله وهو النديم % % 14(@)(@@) % يدني ويقصي من يشا % % وهو العذاب هو النعيم % % 15(@)(@@) % معناه نحن وإنما % % معناه يدركه الشميم % % 16(@)(@@) % وهو الكوائن كلها % % والكهف أيضا والرقيم % % 17(@)(@@) % الله أكبر لا سوا % % ه فإنه العقد النظيم % % 18(@)(@@) % والسلك وهو وراء كل الكل غفار حليم % % 19(@)(@@) % وأنا السقيم وقدرتي % % عجز ولا يشفى السقيم % % 20(@)(@@) % والكون مثلي هكذا % % لكن رضيع أو فطيم % % PageV01P1385 البحر : - 1(@)(@@) % قد هدينا بالخاطر المستقيم % % لحديث عن الحبيب قديم % % 2(@)(@@) % ووجدنا معارفا وعلوما % % كان فيها المزاج من تسنيم % % 3(@)(@@) % فشممنا بها روائح غيب % % وسركنا بطيب ذاك الشميم % % 4(@)(@@) % كرياض زهورها فائحات % % لذوي الشم مع هبوب النسيم % % 5(@)(@@) % ذات حق أرواحنا أخبرتنا % % عن معاني أسمائه في الرقيم % % 6(@)(@@) % محسنات بأمره يقذف الخل % % ق كقذف المداد صورة ميم % % 7(@)(@@) % وهو أمر محقق وهو خلق % % باطل متقن بصنع الحكيم % % 8(@)(@@) % ووجود صرف إذا ما تجلى % % صبغ الكل بالوجود العظيم % % 9(@)(@@) % ومراداته هي الكل جاءت % % في تراتيبها كعقد نظيم % % 10(@)(@@) % صبغة لم تكن وبالوهم كانت % % ما وجود يكون وصف العديم % % PageV01P1386 11(@)(@@) % حاش لله والبصائر زاغت % % قبل زيع الأبصار في التقديم % % 12(@)(@@) % والذي يشهد الحقيقة غيبا % % بشهود عنها لها مستقيم % % 13(@)(@@) % لا بشوب من الحلول ولا مع % % نى انحلال فيها ولا تجسيم % % 14(@)(@@) % ويرى الكل فانيا مضمحلا % % فهو عبد فاني لحق مقيم % % 15(@)(@@) % أيها النفس ها هو النور باد % % فاكشفى عنه منك ثم استقيمي % % 16(@)(@@) % ودعي عنك 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms274# ما سواه فمنه % % ما سواه السراب للتوهيم % % 17(@)(@@) % ثم ناجيه فوق طور التداني % % بتدليه إرث موسى الكليم % % 18(@)(@@) % واعلميه بعلمه لا بعلم % % تدعيه يكون بالتعليم % % 19(@)(@@) % في مقام محمدي شريف % % شارع للتحليل والتحريم % % 20(@)(@@) % فعليه السلام ما راق معنى % % لمعنى فجاد بالتسليم % % PageV01P1387 البحر : - 1(@)(@@) % عجبت من شيئين قد أجمعت % % عليهما كل عقول الأنام % % 2(@)(@@) % فالأول المعدوم من كل شيء % % أزال عنه الله وصف انعدام % % 3(@)(@@) % فصار موجودا وأضحى له % % وصف وجود ظاهر للعوام % % 4(@)(@@) % فاعجب لموصوف هو المنتفى % % ووصفه الثابت دون انبهام % % 5(@)(@@) % بمن ترى الوصف غدا قائما % % تحققوا يا قوم هذا الكلام % % 6(@)(@@) % والآخر الحق الوجود الذي % % قدر كل الخلق بالانتظام % % 7(@)(@@) % كيف بمعدوماته قد غدا % % متصفا والعقل فيها إمام % % 8(@)(@@) % حتى بدا التنزيه عنها به % % واحتاج هذا الأمر للاختصام % % 9(@)(@@) % وإنما القهار وهو الذي % % أفعاله تجري بحكم المرام % % 10(@)(@@) % فيطلع العقل على ما يشا % % من لمعاني عن ضيا أو ظلام % % PageV01P1388 11(@)(@@) % تصرفا منه كيفماذو العلم قصر مشيد ليس ينهدم بئر معطلة ذو الجهل مرتدموالقرب من خالق الأكوان معرفة بها قلوب ذويها فيه تأتدمما الزهد إلا مقام السالكين إلى قرب الإله لهم يعلو به قدموكيف يمكن زهد لامرئ نظرت عيناه أن % أراد لا عتب كما لا ملامسقط أبيات ص % % PageV01P1389 البحر : - 1(@)(@@) % أنا التعين والرب المهيمن ما % % به التعين طوبى للذي فهما % % 2(@)(@@) % هو الوجود القديم المحض جل ولم % % أزل مقدره والحادث العدما % % 3(@)(@@) % فرفت بيني بتحقيق الوجود له % % وبينه بعد درك الجمع بينهما % % 4(@)(@@) % والجاهل الغر لا يدري مقالتنا % % فيه وإن كان محسوبا من العلما % % 5(@)(@@) % ومن عجائب أمري أنني عدم % % ولي وجود به قد صرت متهما % % 6(@)(@@) % وهو الذي قبضتني هكذا يده % % لها وقد بسطتني صنعة الحكما % % 7(@)(@@) % فحرت فيه وفي أمري فأرشدني % % إليه يثبت لي في علمه قدما % % 8(@)(@@) % فها أنا اليوم مشغوف برؤيته % % محققا ظاهرا في الكون منبهما % % 9(@)(@@) % هل من فتى يا بمني قومي افهمه % % فيكشف الله عنه هذه الغمما % % 10(@)(@@) % ويصبح القطب في سامي دوائره % % وفي الحقائق يمسي المفرد العلما % % PageV01P1390 11(@)(@@) % ما قلت ذلك من نفسي ولا جهلت % % حقيقتي فادعت ما قلته شمما % % 12(@)(@@) % وإنما الغيب لي لاحت إشارته % % لتسمع اللوح 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms275# ما قالته والقلما % % 13(@)(@@) % لوح الوجود المسمى روح نفحته % % وعقله قلم كل الورى رقما % % 14(@)(@@) % مراتب هن للحق الوجوج بدت % % فيهن كان قديما واسمهن عما % % PageV01P1391 البحر : - 1(@)(@@) % معرفتي مخلوقة وهي لا % % تليق بالخالق ربي القديم % % 2(@)(@@) % لأجل ذا في كل وقت بدت % % في صورة يطرب منها النديم % % 3(@)(@@) % إذا تأملنا تناويعها % % في كل معوج وفي مسقيم % % 4(@)(@@) % وإنها قاصرة كلها % % عن حضرة الغيب النزيه العظيم % % 5(@)(@@) % قلنا صواب كلها قول من % % يعتبر المخلوق ذاك العديم % % 6(@)(@@) % وإنها استعداده قد بدا % % منه لها يرجى قبول الكريم % % 7(@)(@@) % وباعتبار الحق قلنا خطا % % جميعها والوصف فيها ذميم % % 8(@)(@@) % وإنما الحق تعالى الذي % % بنفسه دون سواه عليم % % 9(@)(@@) % فعملنا بالحق منا له % % إسلامنا والقلب منا سليم % % 10(@)(@@) % ونحن بالعلم الذي نفسه % % تعلمه نعلمه يا فهيم % % PageV01P1392 البحر : - 1(@)(@@) % عدم يحيط به الوجود وإنما % % عرف الوجود إذا الوجود تكلما % % 2(@)(@@) % وهو الوجود وكلنا عدم بنا % % هو قد أحاط وقد أشار فأفهما % % 3(@)(@@) % صور بقرطاس تقص فإنها % % معدومة ولها الوجود توهما % % 4(@)(@@) % أعني بذلك أنها مقصوصة % % في داخل القرطاس قصا محكما % % 5(@)(@@) % قرطاسها الموجود لا هي وحده % % وهو المحيط بها وعنها أبهما % % 6(@)(@@) % وله الظهور بوصف إحاطة % % فانظر وليس لنا الظهور لتعلما % % 7(@)(@@) % وجميع هذا كله في لمحة % % يبدو ويخفى منه وتكرما % % 8(@)(@@) % والأمر أمر الله يعنى شأنه % % هو كل يوم فيه لن يتصرما % % 9(@)(@@) % والخلق خلق الله أيضا كلهم % % عدم إذا حققت أرض أوسما % % 10(@)(@@) % وإذا مشيت مع العقول ووهمها % % كنت المؤخر والمحق مقدما % % PageV01P1393 11(@)(@@) % إذا ما سوى مولاك جاءك باطل % % في النص فاني هالك كم ذا العمى % % 12(@)(@@) % فالمبطلون هم الذين تعلقوا % % بسوى الإله الحق من جهل نما % % 13(@)(@@) % والعارفون هم الذين قد اهتدوا % % فاتبع طريقهمو وخذها سلما % % 14(@)(@@) % واسلك بها في الشرع شرع محمد % % تجد الذي وجدوا تصبح مسلما % % 15(@)(@@) % صلى عليه الله ما ذهب الدجى % % وأتى الصباح وما الهزار ترنما % % PageV01P1394 البحر : - 1(@)(@@) % تجلت لنا ذات وفعل بدا واسم % % فكانت وما كنا وليس لنا وسم % % 2(@)(@@) % هنالك قامت بالوجود قيامة % % بها حشرت أرواحنا واختفى الجسم % % 3(@)(@@) % مدام بها الأفراح دامت لأهلها % % ومن لم يذقها كل أوقاته غم % 4(@)(@@) % وقام بها الساقي وحيى فساقنا % % إلى مورد 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms276# منها لذيذ به الطعم % % 5(@)(@@) % إذا ما تراءت في الكؤؤس بدالها % % شعاع له في كل ناحية نجم % % 6(@)(@@) % هي السر للأشياء والجهر دائما % % على عدد الأنفاس والبدء والختم % % 7(@)(@@) % بها يهتدي الأعمى إليها ويسمع ال % % أصم وتأتي ناطقين بها البكم % % 8(@)(@@) % ويأمن ذو خوف ويفرح ذو أسى % % ويعتز ذو ذل ويبرابها السقم % % 9(@)(@@) % ولو أنهم صبوا على البحر قطرة % % لعاد بها عذبا ولو أنه سم % 10(@)(@@) % ولو ذكروا حول الحطيم صفاتها % % لزال عن البيت العتيق بها الحطم % % PageV01P1395 11(@)(@@) % ولو لم تكن أسماؤها قد تبينت % % لما بان في الأكوان كيف ولا كم % 12(@)(@@) % ولولا سنا كاساتها من ورا الورى % % لما كان ذوق في الندامى ولا فهم % % 13(@)(@@) % ولو أن ميتا لقنوه بلفظها % % لقام سريعا نحوها شوقه ينمو % % 14(@)(@@) % ولولا بدت لم يشعر الأشعري بها % % ولولا تخفت ما تجهمها جهم % % 15(@)(@@) % ولولا معاني حسنها ظهرت على % % ملاح الورى ما كان عشق ولاوهم % % 16(@)(@@) % ولو بيتيم الوالدين قد اعتنت % % لعز وعنه زال من ذله اليتم % % 17(@)(@@) % جمال تجلى في جلال وعكسه % % فقوم له مدح وقوم لهم ذم % 18(@)(@@) % وكل قلوب الناس لو لم تهم بها % % لما طاب نثر في الكلام ولا نظم % % 19(@)(@@) % ولكنهم هاموا ورقت طباعهم % % ولم يعلموا في أي واد بها هموا % % 20(@)(@@) % لثام من الأشياء يحجب وجهها % % حلا لعيون العاشقين به اللثم % % PageV01P1396 21(@)(@@) % ألا حي يا صاحي على سكرة بها % % ودع عنك من هم دونها عندهم وهم % % 22(@)(@@) % وشقق بها الأثواب عنك وكن بها % % مجرد عزم لا يقاس به عزم % % 23(@)(@@) % وبت في ثرى حاناتها متلفقا % % بأثواب ذل في هواها بها تسمو % % 24(@)(@@) % وكن عاجزا عنها تكن قادرا بها % % فعدلك عنها منك نحو السوى ظلم % % 25(@)(@@) % هي البيت بيت الله حجت قلوبنا % % إليها فلا ذنب علينا ولا جرم % % 26(@)(@@) % إذا نحن أحرمنا نلبي بذكرها % % وفي علميها عندنا يكثر العلم % % 27(@)(@@) % وإن زمزم الحادي بها فهي زمزم % % وعن مصنا من ثديها ما لنا فطم % % 28(@)(@@) % نعمنا بها في لذة العيش والصبا % % وما ذاك إلا أنها أنعمت نعم % % 29(@)(@@) % هي الدهر في تقليب أيامه على % % بنيه له حرب بهم وله سلم % % 30(@)(@@) % إذا ما شربناها خفينا بنورها % % وعند 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms277# طلوع الشمس ما للدجى رسم % % PageV01P1397 31(@)(@@) % بها للحواس الخمس منا تمتع % % فسمع ولمس ذوقنا بصر شم % 32(@)(@@) % وللعقل أيضا لذة في جمالها % % وسر بدا منها له وجب الكتم % % 33(@)(@@) % وقد سكرت حاناتها وكؤوسها % % بها في تجليها وقد سكر الكرم % % 34(@)(@@) % ولو أن إنسانا صحا لرأى هنا % % من السكر قد هامت بها العرب والعجم % % 35(@)(@@) % ومن سكرهم منها يقولون غيرها % % وهذا أب قالوا كما هذه أم % 36(@)(@@) % وقالوا عيون في وجوه وأرجل % % وأيد وقالوا أرؤس ودم لحم % % 37(@)(@@) % معان تبدت في صفاء وجودها % % فقوم لهم أجر وقوم لهم إثم % % 38(@)(@@) % وتلك نعوت قائمات بها لها % % على الفرض والتقدير لا أنه حتم % % 39(@)(@@) % إشاراتها اللاتي بوصف مشيئة % % تسمى بأشيا وهي هالكة عقم % % 40(@)(@@) % وما ثم توليد وليس مناسبا % % لها ذاك بل وصف إليها له ضم % PageV01P1398 41(@)(@@) % تحقق بما قلناه فيها مجانبا % % سواه فما قلناه فيها هو الغنم % % 42(@)(@@) % وإياك والتوليد في جعلها السوى % % فذلك قذف منك في حقها شتم % % 43(@)(@@) % وإن جهل الأقوام ذلك واختفى % % عليهم فللتوحيد توليدهم هدم % % 44(@)(@@) % نصحتك فامسح عن بصيرتك العمى % % بقولي وإلا فالنصوص لك الخصم % % 45(@)(@@) % وهذا هو الحق الذي هو ظاهر % % وبالغيب فيها ما عداه هو الرجم % % 46(@)(@@) % خذ الكاس مني يا ابن ودي فإنه % % روى بهذا فليكن عندك الحزم % % 47(@)(@@) % ومل طربا في النشأتين بشربه % % فإن شرابي للضلال به هضم % % 48(@)(@@) % شراب طهور في كؤوس نظيفة % % كريم به الساقي ومنه العطا الجم % 49(@)(@@) % على رنة الأسماء دام مدامنا % % وإن نمق الزور الوشاة وإن نموا % % 50(@)(@@) % وفي مقعد الصدق العزيز مناله % % تجلت لنا ذات وفعل بدا واسم % % PageV01P1399 البحر : - 1(@)(@@) % العفو أليق لا جرم % % خلف الوعيد من الكرم % % 2(@)(@@) % إن الكمال هو الذي % % حبل الوجود به انبرم % % 3(@)(@@) % وعليه نكسب لا علي % % نا كاسب هو ما انخرم % % 4(@)(@@) % لولا النصوص أتت بأخ % % بار الوعيد المحترم % % 5(@)(@@) % قلنا لكم ما الكل إلا الن % % نور يلمع في الحرم % % 6(@)(@@) % والنار نور أصلها % % والكل حق ما انصرم % % 7(@)(@@) % والواو حين تحركت % % قلبت لأمر لم يرم % % 8(@)(@@) % ألفا هي الذات انجلت % % ذات العماد وقل ارم % % 9(@)(@@) % والمنتهى نهم إلي % % ه فلا شباب ولا هرم % % 10(@)(@@) % والغير ينفخ في الرما % % د ونحن 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms278# ننفخ في ضرم % % PageV01P1400 11(@)(@@) % وكلامنا ممن وقو % % ل الغير أجمعه ورم % % PageV01P1401 البحر : - 1(@)(@@) % أشكو من الله إلى خلقه % % إني إذا من أهل دار الجحيم % % 2(@)(@@) % وإنما شكري له دائما % % على توالي الفضل منه العظيم % % 3(@)(@@) % ألم يكن أوجد ما لم يكن % % مني إيجاد جواد كريم % % 4(@)(@@) % وهو الذي يحفظني بالذي % % يمدني منه برزق مقيم % % 5(@)(@@) % وكيفما كنت أرى فضله % % غامرني وهو الغفور الرحيم % % PageV01P1402 البحر : - 1(@)(@@) % لي حب لواسم حير كل من لواسم % % في صنعة السحر والتنجيم والطلسم % % 2(@)(@@) % خذ خمسة أحرف بلا نقطة وصور اسم % % بميم أول وميم آخر تفك الاسم % % 3(@)(@@) % فأجاب % % 4(@)(@@) % حبي هو الله كم حير باسمه اسم % % حروفه الخمس منها للأصابع قسم % % 5(@)(@@) % يد تعالت من اللامين لاح الجسم % % محمد المصطفى عنها هو الطلسم % % PageV01P1403 البحر : - 1(@)(@@) % إلى الله نرفع أمرا ألم % لنا منه في كل وقت ألم % % 2(@)(@@) % ونشكو إليه أمورا دهت % % وقد خصنا الحزن منها وعم % 3(@)(@@) % ونلجأ في شأننا كله % % إليه ليكفينا ما أهم % 4(@)(@@) % ونطلب منه جميع الذي % % نريد فيتحفنا بالنعم % % 5(@)(@@) % وندعوه في كل أحوالنا % % بقلب منيب إليه وفم % % 6(@)(@@) % عساه يفرج كربالنا % % يضيق به الصدر منا وغم % 7(@)(@@) % عساه يعالجنا بالمنى % % ويكشف خطبا دجا وادلهم % 8(@)(@@) % عساه بوفقنا كلنا % % إلى أمره الندب والملتزم % % 9(@)(@@) % فإنا جيمعا عبيد له % % وفي بابه قد وقفنا خدم % % 10(@)(@@) % وكم نعمة قد حبانا بها % % وأعظمها خلقنا من عدم % % PageV01P1404 11(@)(@@) % وكم رحمة منه وافت لنا % % وكم نقمة قد تولت وكم % % 12(@)(@@) % يكف أولى البغي عن قهرنا % % ويدفع ظلم الذي قد ظلم % % 13(@)(@@) % وأكرمنا دون كل الورى % % وعلمنا علمه بالقلم % % 14(@)(@@) % وقد خلق الكل من أجلنا % % ومن أجله الخلق منا استتم % % 15(@)(@@) % ومع ذاك نكثر عصيانه % % فيا ويح عبد له ما احترم % % 16(@)(@@) % ونذنب سرا وجهرا ولا % % نبالي بما فيه زل القدم % % 17(@)(@@) % نباديه بالسوء وهو الذي % % لنا منعم محسن من قدم % % 18(@)(@@) % فيا مالك الملك يا ذا الجلا % % ل يا صاحب الجود ياذا الكرم % % 19(@)(@@) % ويا خالق الخلق يا من له % % أياد علينا تفيض الحكم % % 20(@)(@@) % بحرمة طه نبي الهدى % % ومن جاء بالنور يمحو الظلم % % PageV01P1405 21(@)(@@) % وإخوانه الأنبيا كلهم % % وبالتابعين لهم في الأمم % % 22(@)(@@) % تفضل علينا بعفو ولا % % تدعنا نهلك 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms279# في المزدحم % % 23(@)(@@) % وسهل لنا توبة نحتمى % % بها في غد من لهيب الضرم % % 24(@)(@@) % ولا تحرق الجسم يا سيدي % % بنيرانه فهو لحم ودم % % 25(@)(@@) % وكن راحما ذل أرواحنا % % إذا ما أتيناك يوم الندم % % 26(@)(@@) % وهبنا جميعا لرحماك يا % % رحيم وأجزل لنا في القسم % % 27(@)(@@) % وعنا تجاوز وكنت منعما % % وداو من القلب هذا السقم % % 28(@)(@@) % وسامح ولا تخزنا في غد % % فإنك أولى حكيم حكم % % 29(@)(@@) % شرعت لنا الدين نمشي به % % إليك على ذا الطريق الأمم % % 30(@)(@@) % وآياتك الواضحات اهتدى % % لها في الورى كل ذوق وشم % PageV01P1406 31(@)(@@) % تسمت بأشياء وهي التي % % عليها لسان الجهول أنبكم % % 32(@)(@@) % فيا فوز عبد ترآءت له % % إلى ان رآها لها فالتزم % % 33(@)(@@) % وأمسي وأصبح يسمو بها % % وبالعز فهمها والحشم % % 34(@)(@@) % فيا ظاهرا والسوى باطن % % ويا باطنا والسوى مرتسم % % 35(@)(@@) % تجليت في كل شيء كما % % أردت فداء الضلال انحسم % % 36(@)(@@) % وبصرتنا بالتجلي وفي % % بصائرنا نورك المحض تم % 37(@)(@@) % وحولت عنا حجاب العمى % % وأوضحت ما كان فينا ابنهم % % 38(@)(@@) % وأنت المنزه عن كل ما % % يرام من الكون أو لم يرم % % 39(@)(@@) % وأنت المسبح في ملكه % % بقبح الصياح وحسن النعم % % 40(@)(@@) % وأنت الموحد منا ومن % % جميع البرايا بحال أتم % PageV01P1407 41(@)(@@) % وشرك أولي الجهل دعوى فقط % % كما يقتضي ذاك حلم الحكم % % 42(@)(@@) % بل الشرك والكفر قد وحداعلأنهما نوع خلق هجمص فما في الوجود سوى واحد سقط شطرين ص % % وأفعاله لا سوى ذاك ثم % 43(@)(@@) % فلا تعرضوا عنه أنتم به % % كما الفعل من فاعل ما انقسم % % 44(@)(@@) % وقوموا إلى باب إحسانه % % لتحييوا بإقبال محيي الرمم % % 45(@)(@@) % ولا تكسلوا أو تخافوا على % % نفوسكمو منه فاللطف جم % 46(@)(@@) % ولا تنفروا عنه فهو الذي % % دعاكم إليه بأهل العصم % % 47(@)(@@) % فعين الجلال إليكم رنت % % ووجه الجمال زها وابتسم % % 48(@)(@@) % وأنتم عباد كريم وما % % ببخل الهكمو متهم % % 49(@)(@@) % فإن الذي هو رب لنا % % قريب إلينا سناه وهم % % 50(@)(@@) % وجدنا به ومددنا به % % وضم به شملنا وانتظم % % PageV01P1408 51(@)(@@) % فلا تقنطوا منه والجؤوا لي % % حماه ولوذوا بهذا الحرم % % 52(@)(@@) % وإن عطاياه مبذولة % % وقد فاز قاصدها واغتنم % % 53(@)(@@) % فسبحان من أعجز الكل عن % % معاني الوصول إذا الكل هم % 54(@)(@@) % وجل الذي أوقف العقل في % % قصور وحير كل النسم % % 55(@)(@@) % فلا الفكر يعرفه لا 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms280# ولا % % له يدرك الفهم حيث اقتحم % % 56(@)(@@) % فسلم إليه وكن طالبا % % له باجتهاد وخل الوهم % % 57(@)(@@) % وإن شئت قم بعد هذا له % % بنفسك سعيا وإن شئت نم % % 58(@)(@@) % وكن سائرا بشراع التقى % % إليه به إن جدواه يم % 59(@)(@@) % فيا ربنا كن معينا لنا % % وساعد على ما دهى واصطلم % % 60(@)(@@) % ولا تترك القلب في حيرة % % وجهل به البعد عنك انتقم % % PageV01P1409 61(@)(@@) % وصل وسلم على المصطفى % % شفيع البرية زاكي الشيم % % 62(@)(@@) % ومن قد أتى رحمة للورى % % وعنا به قد أزيلت نقم % % 63(@)(@@) % ورضوان ربي عن آله % % ذوي المجد والقدر فينا الأشم % % 64(@)(@@) % وأصحابه الغر أهل التقى % % كواكب فضل إليها يؤم % % 65(@)(@@) % وعن تابعيهم بخير وعن % % مشايخنا القوم أهل الهمم % % 66(@)(@@) % وعن كل إخواننا دائما % % بغير انتهاء وغير عدم % % 67(@)(@@) % مدى الدهر ما هب ريح وما % % توالي على الروض صوب الديم % % 68(@)(@@) % وما قال يدعوه عبد الغني % % إلى الله نرفع أمرا ألم % PageV01P1410 البحر : - 1(@)(@@) % إن كاس التوحيد من يحتسيه % % قاء منه معارفا وعلوما % % 2(@)(@@) % كن بصيرا ولا تلم أهل سكر % % بشراب التقى تصير الملوما % % 3(@)(@@) % شرب الغرب كأس شمس فقام ال % % ليل سكران ثم قاء النجوما % % PageV01P1411 البحر : - 1(@)(@@) % رب موصول هو الناي الذي % % طاب للسامع فيه النغم % % 2(@)(@@) % كاد من ينفخه ينفخ في % % روحنا روحا ولا أحتشم % % 3(@)(@@) % حيث معلوم لنا نافخة % % من ورا كل الورى منبهم % % 4(@)(@@) % يوصل القوت إلى الروح به % % من طريق الأذن فالأذن فم % % PageV01P1412 البحر : - 1(@)(@@) % طاب وقتي بلطيف مسمع % % روح من يصغى إليه نغما % % 2(@)(@@) % والمغنى والغنا آلته % % توهب الأسرار من حلقهما % % 3(@)(@@) % فترى الروح به تنعش إذ % % قوتها صارت له الأذن فما % % PageV01P1413 البحر : - 1(@)(@@) % يا سماعا كان من آلته % % من به جاء وراق النغم % % 2(@)(@@) % وبه الأرواح تقتات وما % % ثم غير الأذن للروح فم % % PageV01P1414 البحر : - 1(@)(@@) % نزيد في الشكر له دائما % % وكلما زدناه النعم % % 2(@)(@@) % مثل تجارة الكريم الذي % % له شياه ولديه نعم % % 3(@)(@@) % فكلما قلنا له زد لنا % % قال أيا من عاملوني نعم % % PageV01P1415 البحر : - 1(@)(@@) % محمد الاسم حمد الرسم معلوم % % وليس يحكيه منطوق ومفهوم % % 2(@)(@@) % لأنه السر فالأسرار تعرفه % % فكن به السر إن الجهر موهوم % % 3(@)(@@) % ميم الدوائر بالتحقيق معتبر % % في كل شيء فمقروء ومرقوم % % 4(@)(@@) % والمد معناه 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms281# في العرف الزيادة من % % شيء يقال وما قد قيل محتوم % % 5(@)(@@) % حم في قلبه فهي الزيادة مع % % حم حم سر السبع مكتوم % % 6(@)(@@) % حاء وميم إليها الدال منتسب % % لأنه سرها يخفيه حلقوم % % 7(@)(@@) % حرف شريف له التحريف في بشر % % قد اعتراهم على تحريفه شوم % % PageV01P1416 البحر : - 1(@)(@@) % طيب محيي الدين مسك في الورى % % فاح لكن كل أنف لا يشم % 2(@)(@@) % وعلوم خرجت من فمه % % كل فهم بهداها لا يلم % 3(@)(@@) % قوسه أين الذي يرمى بها % % غرض التحقيق يا قوم هلموا % % PageV01P1417 البحر : - 1(@)(@@) % حولوا عني من الكون لثاما % % وامنحوني من سنا الوجه التثاما % % 2(@)(@@) % يا أحبائي وبثوا نوركم % % في جميعي واكشفوا عني الظلاما % % 3(@)(@@) % لمتى نفسي بكم نفسي كما % % لم أزل لحما لديكم وعظاما % % 4(@)(@@) % فاجعلوني كيف ما كنت بكم % % أول الأمر انمحاقا وانعداما % % 5(@)(@@) % حيث أنتم لا أنا لو كنت أو % % لم أكن كوني بكم صار حراما % % 6(@)(@@) % يا جميل الوجه إحسانك لي % % إن أرى وجهك بي بدرا تماما % % 7(@)(@@) % أنت حق وأنا الباطل لي % % جولة والحق بالدولة قاما % % 8(@)(@@) % عن يمين الحي قوم نزلوا % % يستظلون من القلب خياما % % 9(@)(@@) % أبهموا الأمر على من أبهموا % % ليتني أقدر أنقى الانبهاما % % 10(@)(@@) % كل من يعرفهم ينكر من % % نفسه معهم وجود وارتساما % % PageV01P1418 11(@)(@@) % والذي يجهلهم ساء بهم % % ظنه فهو على دعواه داما % % 12(@)(@@) % خطفوا لبيق ولم أشعر فما % % حيلتي إلا الجوى والاصطلاما % % 13(@)(@@) % ثم منوا بتجليهم على % % جملتي حالا وقالا ومقاما % % 14(@)(@@) % فأنا اليوم بهم انظرهم % % لا بنفسي وعليه أترامى % % 15(@)(@@) % هذه محبوبة القلب بدت % % تلبس الدهر لنا عاما فعاما % % 16(@)(@@) % جعلتني في ذرى هود جها % % فامتلى القلب لها مني احتراما % % 17(@)(@@) % وتدانت فتدلت وعلت % % وغلت قدرا وجلت أن تسامى % % 18(@)(@@) % فهي لا شيء سواها أبدا % % وإن ازدادت خفاء واكتتاما % % 19(@)(@@) % وسواها هي في برقعها % % حيث سمته خواصا وعواما % % 20(@)(@@) % برقع الظلمة والنور لمن % % كان مأموما ومن كان إماما % % PageV01P1419 21(@)(@@) % وهو أمر كيفما شاءت به % % تتبدى يقظة لي ومناما % % 22(@)(@@) % أيها الركب الذي ودعنا % % سائرا يقطع بيدا واكاما % % 23(@)(@@) % قف بسلع وروابي رامة % % إن قلبي ذلك الجانب راما % % 24(@)(@@) % وعيوني نحوه شاخصة % % تلمح البرق اعتناء واهتماما % % 25(@)(@@) % خذ إلى الحي سلامي فعسى % % يبعث الحي إلى 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms282# الميت سلاما % % 26(@)(@@) % وتقر العين بالعين وما % % بيننا يرتفع البني دواما % % 27(@)(@@) % عظم الأمر على الأمر ولم % % يكن الأمر لنا إلا كلاما % % 28(@)(@@) % والذي ينزل أو يصعد ما % % هو إلا النقع ثبت والقتاما % % 29(@)(@@) % ثبت لسرا الذي كان لها % % وهي كالشمس سحاب وغماما % % 30(@)(@@) % فترآءتها عيون هي من % % ذاتها وانقسمت منها انقساما % % PageV01P1420 31(@)(@@) % صدق القول فما أقربها % % وهي بالعبد لنا ترمى السهاما % % 32(@)(@@) % عطفت سلمى عى السالم من % % غيرها الوهمي إن كان استقاما % % 33(@)(@@) % لا تقل يا سعد هذا جبل % % إن طغى الماء به نلت اعتصاما % % 34(@)(@@) % واصنع الفلك بتقواك ولا % % تأمن الطوفان موجا والتطاما % % 35(@)(@@) % كان لي في وجه سلمى أثر % % من سواد فأزالته ابتساما % % 36(@)(@@) % وتلاقينا على النور وقد % % كشفت عني الجلابيب العظاما % % 37(@)(@@) % صارت النفس هي القلب هنا % % حيث ما زجت بها القوم الكراما % % 38(@)(@@) % واتحدنا واتخذنا سررا % % نتكي سرا عليها لن نضاما % % 39(@)(@@) % ودخلنا كلنا جنتنا % % لا نرى ذلا ولا نقلى انهضاما % % 40(@)(@@) % فانقلوا عني وعنهم خبرا % % طيبا يهدي به الله الأناما % % PageV01P1421 41(@)(@@) % واذكروني عند من صلى لها % % يعرف الحال ومن بالصدق صاما % % 42(@)(@@) % نحن إخوان الصفا نحن الأولى % % نحفظ العهد كما نرعى الذماما % % 43(@)(@@) % عين ذاك الواحد الغيب الذي % % نحن كاس الراح فيه والندامى % % 44(@)(@@) % نجتلي منه جمالا ظاهرا % % قد فنينا فيه وجدا وغراما % % 45(@)(@@) % لا تلمنا أيها الغائب عن % % عينه بالجفن دع هذا الملاما % % 46(@)(@@) % وارفع الجفن عن العين تجد % % يقظة بات الورى عنها نياما % % 47(@)(@@) % حاجب يعلو على العين هنا % % أسود يعطي اتفاقا واختصاما % % 48(@)(@@) % وهو حسن الوجه لا ينكره % % غير أعمى عنه أو من يتعامى % % 49(@)(@@) % فانظروا وانتظروا الأمر الذي % % هو أنتم وهو عنكم يتسامى % % 50(@)(@@) % حاصل الأمر جمال كله % % ظاهر في الكون عفوا وانتقاما % % PageV01P1422 البحر : - 1(@)(@@) % لقد أوقعت دعوى المحبة في البلا % % على حكم ما يرضى الهوى ويروم % % 2(@)(@@) % يجاذب روحي أمره فهي روحه % % وتجذبها نفسي لها فتقوم % % 3(@)(@@) % فيا نفسي الأمارة اتئدى هنا % % إلى كم نزاع في الحياة يدوم % % 4(@)(@@) % وآخره موت المحب فإن يمت % % فذلك المحبوب لديه علوم % % 5(@)(@@) % تلوح نجوم الأفق في مائنا فإن % % فني الماء ينخفي والنجوم نجوم % % 6(@)(@@) % وليس هما شيئين يا نفس فافهمي % % كلامي فكم حارت 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms283# بذاك فهوم % % 7(@)(@@) % وضلت بدعواها التي هي ماؤها % % كما نحن قلنا والغبي ملوم % % PageV01P1423 البحر : - 1(@)(@@) % ربنا الله شارع الأحكام % % محكم الخلق غاية الأحكام % % 2(@)(@@) % واحد ماله شريك ولا في % % ملكه غيره عزيز المرام % % 3(@)(@@) % منعم بالوجود منه علينا % % وبإمدادنا مدى الأيام % % 4(@)(@@) % كل طاعاتنا من الله أنعا % % م ومنا شكر على الأنعام % % 5(@)(@@) % جل ربي تبارك الله مولى % % قد علا ذو الجلال والإكرام % % 6(@)(@@) % لم يزل مرشدا لنا ومبينا % % لخفايا الأمور بين الأنام % % 7(@)(@@) % وله الفضل حيث أهدي إلينا % % أحمد المصطفى الرسول التهامي % % 8(@)(@@) % النبي الذي محا الكفر عنا % % وحبابنا بملة الإسلام % % 9(@)(@@) % صلوات الإله منه عليه % % وعليه منه أجل السلام % % 10(@)(@@) % أمد الدهر ما جلا بمديح % % فيه عبد الغني رقيق النظام % % PageV01P1424 البحر : - 1(@)(@@) % إن شربي شرب الجمال الهيم % % من كؤوس الجمال ذات القديم % % 2(@)(@@) % عدم ظاهر بنور وجود % % في ظلام على الصراط القويم % % 3(@)(@@) % فارفقوا في سلامتي يا رفاقي % % والطفوا بالملا متى العديم % % 4(@)(@@) % علم الله بي ولم أك شيئا % % فأنا الآن طبق علم العليم % % 5(@)(@@) % يتجلى يل تارة فيريني % % وجهه الحق في أجل نعيم % % 6(@)(@@) % وله الاستتار بي تارة عن % % نظري في كثائف التجسيم % % 7(@)(@@) % فأرى نفسي التي هي منه % % حدثت قد حكت هوب النسيم % % 8(@)(@@) % بين جمع وبين فرق شهود % % واعتقاد حال كعقد نظيم % % 9(@)(@@) % هذه حالتي وهذا مقامي % % كل حين بحسن أمر مقيم % % 10(@)(@@) % فانكروني أو فاتركوني وشاني % % لا تخوضوا بي في عطاء الكريم % % PageV01P1425 11(@)(@@) % أو بداعي الإلهام فاعتقدوني % % لتنالوا ما نال كل حكيم % % PageV01P1426 البحر : - 1(@)(@@) % هو الوارد القدسي كالسيل يحطم % % فلا يستطيع القلب ذلك يكتم % % 2(@)(@@) % جرى في مجاري الروح من حضرة العلى % % فصادفنا نهواه والقلب مغرم % % 3(@)(@@) % فنلقيه نظما تارة بكلامنا % % ونلقيه نثرا عند من هو يفهم % % 4(@)(@@) % نفرج عنا ما نقاسي بوقعه % % فصولته غلابة والتحكم % % 5(@)(@@) % له محونا طورا وطورا ثبوتنا % % ونحن به في جنة تنعيم % % 6(@)(@@) % ألا عم صباحا قول من قال قبلنا % % له ومساء نحن قلنا نتمم % % 7(@)(@@) % وليس الذي قد قال من كل قائل % % ومنا سوى الغيب الذي يتكلم % % 8(@)(@@) % هو الظاهر المعروف في كل ظاهر % % هو الباطن المجهول من ليس يعلم % % 9(@)(@@) % عرفناه لا أنا عرفناه مثل ما % % عرفنا سواه 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms284# والسوى فيه يعدم % % 10(@)(@@) % وهيهات هيهات الوجود القديم لا % % يشير به عرفاننا ويترجم % % PageV01P1427 البحر : - 1(@)(@@) % ارفع يديك إلى السماء تضرعا % % لله في كل الأمور لتغنما % % 2(@)(@@) % أو ما ترى البلسان مديديه قد % % رفع الكفوف البيض منه إلى السما % % PageV01P1428 البحر : - 1(@)(@@) % روق الكاساتص يا ساقي المدامص في هذا المقام % % 2(@)(@@) % واسق للساداتص في جنح الظلامص خمر الاصطلام % % 3(@)(@@) % واخرق العاداتص ما بين الكرامص أهل الاحترام % % 4(@)(@@) % هات كاسي هاتص لا تخش الملامص أنت لي إمام % % 5(@)(@@) % دور % % 6(@)(@@) % هذه الأحوالص بغية القلوبص لمحة الغيوب % % 7(@)(@@) % من إليها مالص هبت الجنوبص شقت الجيوب % % 8(@)(@@) % فزت بالآمالص والفتى يذوبص كلما يتوب % % 9(@)(@@) % واغتنم ما فاتص قبل الانخرامص نلت ما يرام % % 10(@)(@@) % دور % % PageV01P1429 11(@)(@@) % يا أخا الأشواقص هذه النفوسص كلها حبوس % % 12(@)(@@) % فالزم الإطلاقص وارفع الرؤوسص تشهد العروس % % 13(@)(@@) % كأس خمري راقص أشرقت شموسص من سناالكؤوس % % 14(@)(@@) % إنها حالاتص تمنع المنامص تكثر الهيام % % 15(@)(@@) % دور % % 16(@)(@@) % صل يا رحمنص للنبي الحبيبص مؤنس الغريب % % 17(@)(@@) % بهجة الأكوانص ذكره يطيبص للفتى اللبيب % % 18(@)(@@) % من يهنه هانص والغني يجيبص عبده النجيب % % 19(@)(@@) % سائر الأوقاتص ما شدا حمامص هام والسلام % % PageV01P1430 البحر : - 1(@)(@@) % نحن أهل العلوم بالإلهام % % لا بفكر العقول والارتسام % % 2(@)(@@) % حيث إلهامنا تقيد فينا % % بمعاني شرائع الإسلام % % 3(@)(@@) % وإذا لم يقم عليه دليل % % عندنا من حديث خير الأنام % % 4(@)(@@) % أو كتاب الله القديم حكمنا % % إنه من وساوس الأوهام % % 5(@)(@@) % وتركنا قبوله وعدلنا % % نحو إيماننا بصدق المقام % % 6(@)(@@) % واتكلنا على الإله تعالى % % نطلب الفيض منه بالإنعام % % 7(@)(@@) % ولدينا الإلهام حيث تأتي % % بشهود النصوص للإفهام % % 8(@)(@@) % فهو أمر محقق ليس فيه % % شبهة علم ربنا العلام % % 9(@)(@@) % نتلقاه بالقبول وإلا % % فهو وسواس غفلة وتعامى % % 10(@)(@@) % ولنا بالكتاب بالله فهم % % خص في الخواص دون العوام % % PageV01P1431 11(@)(@@) % وحديث النبي تفهم منه % % كل معنى يحير العقل سامي % % 12(@)(@@) % إن هذا من منة الله لا من % % قوة الحذق في بليغ الكلام % % 13(@)(@@) % حيث لا شيء نحن والحق حق % % لا سواه والشيء في الإعدام % % 14(@)(@@) % ويمد الجميع منه بجود % % ووجود هو الضيا في الظلام % % PageV01P1432 البحر : - 1(@)(@@) % ظهر الوجود من العدم % % وبدا الحدوث من القدم % % 2(@)(@@) % وأتت تباشير الذي % % خلق الورى لحما ودما % % 3(@)(@@) % والكل فان ماله % % رأس قوم ولا قدم % % 4(@)(@@) % هو ثابت ما شم 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms285# را % % ئحة الوجود ولا ندم % % 5(@)(@@) % ظن الوجود لنفسه % % فبنى عليه فانهدم % % PageV01P1433 البحر : - 1(@)(@@) % قد جاء ربنا لنا % % في ظلل من الغمام % % 2(@)(@@) % وإن نشأ جئنا له % % إن زال عنا الانبهام % % 3(@)(@@) % والظلل التي أتى % % بها ذواتنا الجسام % % 4(@)(@@) % تظلنا من نوره % % كيلا يكون الانعدام % % 5(@)(@@) % وهي نجار عدم % % نشا من الاسما العظام % % 6(@)(@@) % عناصر أربعة % % مثل الذي في ذا المقام % % 7(@)(@@) % مقام دنيانا التي % % بربها لها القيام % % 8(@)(@@) % واصلها بأنه % % حي عليم لا يرام % % 9(@)(@@) % وهو مريد قادر % % أركان إيجاد العوام % % 10(@)(@@) % أما الخواص فهو لا % % وجود فيهم يستدام % % PageV01P1434 11(@)(@@) % كالمثل المضروب في % % عالمنا هذا المرام % % 12(@)(@@) % يقول عنه ربنا % % في منزل من الكلام % % 13(@)(@@) % معناه ضرب مثل % % فاستمعوه يا كرام % % 14(@)(@@) % والمثل الأعلى له % % في الأرض والسما يقام % % 15(@)(@@) % فحققوا يا أخوتي % % ما قلته من النظام % % 16(@)(@@) % واستكشفوا بربكم % % عنه وذوقوا ذا الطعام % % 17(@)(@@) % فإنه لب وقد % % أزيل قشره الجهام % % 18(@)(@@) % فتوح وقت رائق % % يجلو لكم كأس المدام % % 19(@)(@@) % فتعرفون ربكم % % من ذاتكم دون الأنام % % 20(@)(@@) % وتفرقون بينه % % وبينكم طول الدوام % % PageV01P1435 21(@)(@@) % وتعلمون أنه % % حق به الجميع هام % % 22(@)(@@) % وباطل أنتم كما % % قال تعالى والسلام % % PageV01P1436 البحر : - 1(@)(@@) % إن الوجود الواحد ال % % موصوف فينا بالقدم % % 2(@)(@@) % هو ظاهر بصفاته % % لي من شبابيك العدم % % 3(@)(@@) % عدم العوالم كلها % % في الأصل مبني ما انهدم % % 4(@)(@@) % لا تنظرن لها وقل % % ما في الوجود لها قدم % % 5(@)(@@) % وانظر إلى صرف الوجو % % د فقط بلا لحم ودم % % 6(@)(@@) % فهو المنزه عن سوا % % ه ولا يحيق بك الندم % % 7(@)(@@) % واعلم بأنك قد أمر % % ت بما أمرت وما انصدم % % 8(@)(@@) % بقل انظروا يا قوم ما % % ذا في السموات احتدم % % 9(@)(@@) % ومن الموالي كن ولا % % تكن المهان من الخدم % % 10(@)(@@) % ولنفسك اعرف واعترف % % بالحق واترك من كدم % % PageV01P1437 البحر : - 1(@)(@@) % دم طالبا تاركا دعوى الوصول فما % % فازا مرؤ بل من دعوى الوصول فما % % 2(@)(@@) % رأيت قوما لهم دعوى الوصل إلى % % مولى الموالي الذي قد عمهم كرما % % 3(@)(@@) % وعنه قد رجعوا قصدا لأنفسهم % % يدبرون بها اللذات والألما % % 4(@)(@@) % وليس فيهم سوى دعوى الوصول وقد % % عاشوا بها في غرور زائد وعمى % % 5(@)(@@) % والله ما وصلوا لله إن رجعوا % % وكيف يرجع من في الحضرة انعدما % % 6(@)(@@) % وبعدما انعدم انزاحت حقيقته 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms286# % % إلى حقيقة غيب عنه فانكتما % % 7(@)(@@) % وكان ما كان مما لا أفوه به % % نور لقد أعدم الأنوار والظلما % % 8(@)(@@) % فهو الوجود الحقيقي والسوى عدم % % صرف أحاط به الرب الذي علما % % 9(@)(@@) % وبالذي هو في العلم القديم لقد % % تكلم الحق حتى أظهر الكلما % % 10(@)(@@) % والأمر كن فيكون الخلق أجمعهم % % في كل طرفة عين بارقا دهما % % PageV01P1438 11(@)(@@) % دع الدعاوي وقم في الباب منكسرا % % لعل يقبلك البواب إن رحما % % 12(@)(@@) % ولا تزاحم على نيل المنى أحدا % % واعلم بأن قضاء الله قد لزما % % 13(@)(@@) % والكل منه وما منه سواه فدع % % عنك الجهالة واترك ذلك الوهما % % PageV01P1439 البحر : - 1(@)(@@) % أرسل الله إلينا % % بالكرامات العظام % % 2(@)(@@) % أحمد المختار طه % % سيد الرسل الكرام % % 3(@)(@@) % فتهنوا يا رفاقي % % نلتموكل المرام % % 4(@)(@@) % بالذي قد جاءكم يد % % عو إلى دار السلام % % 5(@)(@@) % قالت أقمار الدياجي % % قل لأرباب الغرام % % 6(@)(@@) % كل من يعشق محمد % % ينبغي أن لا ينام % % 7(@)(@@) % دور % % 8(@)(@@) % يا حبيب الله يا من % % نوره يملا الوجود % % 9(@)(@@) % والذي من كفه قد % % فاض فينا بحر جود % % 10(@)(@@) % أنت سر الله حقا % % جئت من خير الجدود % % PageV01P1440 11(@)(@@) % لنجاة الخلق مما % % ضرهم تهدي الأنام % % 12(@)(@@) % قالت أقمار الدياجي % % قل لأرباب الغرام % % 13(@)(@@) % كل من يعشق محمد % % ينبغي أن لا ينام % % 14(@)(@@) % دور % % 15(@)(@@) % سارت الركبان ليلا % % قصدهم أرض الحجاز % % 16(@)(@@) % والمطايا تترامى % % باضطراب واهتزاز % % 17(@)(@@) % كلما الحادي دعاهم % % للسرى من جد فاز % % 18(@)(@@) % والهوى في القلب يرمي % % كل وقت بالسهام % % 19(@)(@@) % قالت أقمار الدياجي % % قل لأرباب الغرام % % 20(@)(@@) % كل من يعشق محمد % % ينبغي أن لا ينام % % PageV01P1441 21(@)(@@) % دور % % 22(@)(@@) % هذه آرام رامه % % ناظرات بالعيون % % 23(@)(@@) % يا لقومي كل من ها % % م بها يلقى المنون % % 24(@)(@@) % سيما النور يبدو % % هتك السر المصون % % 25(@)(@@) % قد عدمنا العقل لما % % ظهرت تلك الخيام % % 26(@)(@@) % قالت أقمار الدياجي % % قل لأرباب الغرام % % 27(@)(@@) % كل من يعشق محمد % % ينبغي أن لا ينام % % 28(@)(@@) % دور % % 29(@)(@@) % وصلاة الله ربي % % مع سلام لا يزال % % 30(@)(@@) % لنبي الله من حا % % ز جمالا وجلال % % PageV01P1442 31(@)(@@) % والذي عبد الغني ير % % جو به نيل الكمال % % 32(@)(@@) % وبآل وبصحب % % يرتجى حسن الختام % % 33(@)(@@) % قالت أقمار الدياجي % % قل لأرباب الغرام % % 34(@)(@@) % كل من يعشق محمد % % ينبغي أن لا ينام % % PageV01P1443 البحر : - 1(@)(@@) % إن سلمى لها جميع التمني % % 2(@)(@@) % من جميع الورى 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms287# وكل التعني % % 3(@)(@@) % ويح أهل الملام منها ومني % % 4(@)(@@) % حجبوها يوم الرياح لأني % % قلت للريح بلغيها السلاما % % 5(@)(@@) % طلق النوم مقلة الصب بتا % % 6(@)(@@) % حيث صار المنام لا يتأتى % % 7(@)(@@) % جعلوا جمعنا على القرب شتى % % 8(@)(@@) % ثم لم يقنعوا بذلك حتى % % منعوها يوم الرياح الكلاما % % 9(@)(@@) % في هواها عدمت كمي وكيفي % % 10(@)(@@) % ومحت صولة الهوى تأليفي % % PageV01P1444 11(@)(@@) % وتقاوت على الذليل الضعيف % % 12(@)(@@) % فتأوهت ثم قلت لطيفي % % آه لو زرت طيفها إلماما % % 13(@)(@@) % يا خيالا منها أتى وتولى % % 14(@)(@@) % لم أزل منه بالجوى أتقلى % % 15(@)(@@) % ليته كان لي معينا وهلا % % 16(@)(@@) % خصها بالسلام عني والا % % منعوها لشقوتي أن تناما % % PageV01P1445 البحر : - 1(@)(@@) % في امتزاج الوجود بالعدم % % واختلاط الحدوث بالقدم % % 2(@)(@@) % حكمة جل من يشاهدها % % كامتزاج الضياء بالظلم % % 3(@)(@@) % وقياس الوجود حيث بدا % % ليس يبقى سواه فافتهم % % 4(@)(@@) % وكذاك الحدوث يذهب أن % % قدم بأن ظاهر الهمم % % 5(@)(@@) % وكذاك الضياء يمحق ما % % كان من ظلمة لمنبهم % % 6(@)(@@) % لكن الظاهر الوجود سرى % % سر أسمائه بمنعدم % % 7(@)(@@) % فهو معنى امتزاجه وكذا % % قدم مع حدوث منكتم % % 8(@)(@@) % وضياء مع الظلام على % % حكم أسمائه فلم يقم % % 9(@)(@@) % إنه لا امتزاج بينهما % % خالق الخلق بارئ النسم % % 10(@)(@@) % أول وهو آخر لحجي % % ظاهر وهو باطن لعمى % % PageV01P1446 11(@)(@@) % أيها السائر المجد إذا % % جئت سلعا فسل عن الحرم % % 12(@)(@@) % خذ يمينا بنا إلى وطن % % فيه كنا وقف على العلم % % 13(@)(@@) % وتأمل ربوع كاظمة % % بين تلك الطلول والخيم % % 14(@)(@@) % إن لي سادة هناك أرى % % نورهم مشرفا بذي سلم % % 15(@)(@@) % كلما قلت ليت لي خبرا % % عندهم قيل أنت في العدم % % 16(@)(@@) % وإذا قلت لورويت بهم % % قيل لي من بهم يهيم ظمى % % 17(@)(@@) % غير أنى بهم ظهرت لهم % % ظلمة خولطت بنورهم % % 18(@)(@@) % تنتفى تارة وتثبت ما % % بقيت كالخيال في الحلم % % PageV01P1447 البحر : - 1(@)(@@) % قوموا بنا نعشق الساقي لنا يا قوم % % خمر التجلي الذي منه غلافي السوم % % 2(@)(@@) % ما حبكم للسوى الأخيال النوم % % والحب في الله ثابت ليس يفنى دوم % % PageV01P1448 البحر : - 1(@)(@@) % طلع امبدر في دياجي امظلام % % فأنار امقلوب بامإسلام % % 2(@)(@@) % كامل امخلق في امخليقة إني % % في امهوى عنده أسير امغرام % % 3(@)(@@) % هذه بهجة امجمال امإلهي % % لاح في امصورة التي في امأنام % % 4(@)(@@) % نتفداه في امشهود لدينا % % بجميع امأرواح وامأجسام % % 5(@)(@@) % سيد امرسل جاء بامحق حتى 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms288# % % أبصر امخلق بعد طول امتعامي % % 6(@)(@@) % أفلج امثغر أكحل امعين منه % % في امبريات نور بدر امتمام % % 7(@)(@@) % أذهب امكفر بامهداية فينا % % وبه امنور لاح بعد امظلام % % 8(@)(@@) % وعليه امصلاة في كل وقت % % من عبيد امغني له بامسلام % % 9(@)(@@) % وعلى امآل وامصحاب جميعا % % ما تغنى امهزار بامأنغام % % 10(@)(@@) % أو سرى امبرق من نواحي حماه % % أو زها امزهر وهو في امأكمام % % PageV01P1449 البحر : - 1(@)(@@) % تب إلى الله من علوم الكلام % % وتطهروا دخل إلى الإسلام % % 2(@)(@@) % سلم الدين للكلام الذي قد % % أنزل الله فهو خير كلام % % 3(@)(@@) % هو قرآننا المبين فأمن % % بالذي جاء فيه باستسلام % % 4(@)(@@) % واطلب الفهم من إلهك فيه % % فعليه البيان للإفهام % % 5(@)(@@) % واعرف السنة التي ثبتت عن % % سيد المرسلين خير الأنام % % 6(@)(@@) % وتأمل ما قال ربك فيها % % تجد الحق والصواب النامي % % 7(@)(@@) % وإذا لم تفهم فكن مؤمنا لا % % مستربيا بعقلك المستهام % % 8(@)(@@) % واجعل الصبر منك زاد إلى أن % % يفتح الله فيه بالأنعام % % 9(@)(@@) % وإذا لم يفتح فحسبك منه % % إنك المؤمن الجليل المقام % % 10(@)(@@) % واحترز من آراء أهل عقول % % تبعوا ما يقول أهل التعامي % % PageV01P1450 11(@)(@@) % إن علم الكلام محض كلام % % في بيان الأعراض والأجسام % % 12(@)(@@) % هو جرح للدين ما فيه أمر % % ظاهر للعيان غير الأسامي % % 13(@)(@@) % نظر العقل فوقه نظر الشر % % ع وفيه انخرام ذاك النظام % % 14(@)(@@) % أين نور الإيمان من نور عقل % % ناظر بالخيال في الأحكام % % 15(@)(@@) % إن أهل الإيمان في نور غيب % % وذووا العقل كلهم في ظلام % % 16(@)(@@) % تتراءى العقول شيئا بعيدا % % لاح بين الإيجاد والإعدام % % 17(@)(@@) % بدليل يستنبطون هداه % % وهو وهم إلى الردى مترامي % % 18(@)(@@) % فإذا جاءهم دليل نفاه % % ورمته الفهوم في الإيهام % % 19(@)(@@) % بخلاف الإيمان بالغيب فطعا % % فهو يهدي إلى الهدى بالتمام % % 20(@)(@@) % قلد الله يا ابن قومي وقلد % % رسل الله أصدق الأقوام % % PageV01P1451 21(@)(@@) % إن تكن مؤمنا بربك أسلم % % لعلوم المهيمن العلام % % 22(@)(@@) % لا تظن الدليل يهدي إليه % % أو يرى موقظا عيون النيام % % 23(@)(@@) % هو للعقل سلم للمعاني % % تترقى به إلى الاسقام % % 24(@)(@@) % كن بإيمانك المقلد واقنع % % فيه بالله والنبي التهامي % % 25(@)(@@) % لا تفارق تقليد شرعك محضا % % خالصا عن شوائب الانبهام % % 26(@)(@@) % كيف تدري العقول معرفة الله وإدراكها على أقسام % % الله وإدراكها على أقسام % % 27(@)(@@) % عقلك الخلق عابد منك خلقا 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms289# % % لك يبديه فتنة للعوام % % 28(@)(@@) % لمتى أنت هكذا في غرور % % ها هو الموت مسرع الأقدام % % 29(@)(@@) % فنحفظ من حكم عقلك فيما % % لست تدري من الأمور العظام % % 30(@)(@@) % لا تخض بالعقول في ذاك واقعد % % مؤمنا مذعنا ليل المرام % % PageV01P1452 31(@)(@@) % ربما النور نور إيمان غيب % % يكشف الخلق فيك بالإلهام % % 32(@)(@@) % فترى ما ورا العقول وتدري % % ما الذي كنت عنه أسر المنام % % 33(@)(@@) % هذه وهذه شريعة طه % % خاتم الأنبياء خير ختام % % 34(@)(@@) % صلوات من الإله عليه % % كل وقت مقرونة بسلام % % 35(@)(@@) % ما سرت نسمة ومالت غصون % % تتثنى على غناء الحمام % % PageV01P1453 البحر : - 1(@)(@@) % هذا الحبيب الذي بالقهر غيرهم % % وبالعمل بخلاف الشرع عيرهم % % 2(@)(@@) % حكم عليهم وبالأعمال خيرهم % % والكل فانون حتى فيه حبرهم % % PageV01P1454 البحر : - 1(@)(@@) % بنى الكل ثم لهم قد هدم % % وجود له صور من عدم % % 2(@)(@@) % تجلى فلا شيء غير الذي % % أحاط به علمه من قدم % % 3(@)(@@) % وذاك تقاديره الفانيات % % فمنها ملوك ومنها خدم % % 4(@)(@@) % أحاطته حسبوها لهم % % وجودا وهم أسر لحم ودم % % 5(@)(@@) % فلو عرفوا ما بهم من فنا % % لفازوا وكان ثبوت القدم % % 6(@)(@@) % ولكنهم جهلوا أنفسا % % لهم فانيات فحل الندم % % 7(@)(@@) % وبالموت يدرون أحوالهم % % ويدرون ما قد بنوه انهدم % % 8(@)(@@) % وينكشف الأمر إن الذي % % بنوه الوجود لهم وانعدم % % 9(@)(@@) % وعادوا كما ابتدئوا أولا % % مع الله لاشيء هم وانختم % % PageV01P1455 البحر : - 1(@)(@@) % أمامنا هو الإمام الأعظم % % أبو حنيفة الفتى المقدم % % 2(@)(@@) % نمشي به في حضرة ظاهرة % % نحن بها لغيرنا المعلم % % 3(@)(@@) % وشيخنا الشيخ الهمام الأكبر % % في باطن الأمر الذي لا يفهم % % 4(@)(@@) % فاصبر علينا لنريك ما نرى % % وانظر إلى النور بدا يا مظلم % % 5(@)(@@) % هذا صراط الله مثل شعرة % % دقيقة وأنت غر أبلم % % 6(@)(@@) % يديرك الوسواس كيفما جرى % % عدل من الله وأنت تظلم % % 7(@)(@@) % نحن الذين عقلنا من تحتنا % % وعلمنا من الإله نعلم % % 8(@)(@@) % وأنت عقلك الذي عشت به % % فوقك مسدول عليك مغرم % % 9(@)(@@) % والعقل نور الله لكن هو في % % ظلمة طبع فيك منك يحكم % % 10(@)(@@) % بمقتضى ما قدر الله به % % عليك فاتق الإله تسلم % % PageV01P1456 11(@)(@@) % وكن بشرع الله عاملا ولا % % تعرض عن الشرع ودع ما يحرم % % 12(@)(@@) % أنا الذي أدعو إلى الشرع كما % % أدعو إلى حقيقة الشرع اعلموا % % PageV01P1457 البحر : - 1(@)(@@) % كلمات حروفها الأجسام % % والمعاني أرواحهن 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms290# القيام % % 2(@)(@@) % صادرات عن الإله تعالى % % يتبدى بها الضيا والظلام % % 3(@)(@@) % وهو الله لا سواه أتانا % % بل أتاه منه إليه الكلام % % 4(@)(@@) % أين أنتم يا غافلون فأنتم % % أحرف قاذفاتها الأقلام % % 5(@)(@@) % لا معاني لها حروف هجاء % % يترجى تعليمهن الغلام % % 6(@)(@@) % فتنتكم ظواهر الكون حتى % % غاب عنكم معناه وهو المرام % % 7(@)(@@) % فاستقيموا بربكم في هداه % % ذلك الحق تعرفوا والسلام % % PageV01P1458 البحر : - 1(@)(@@) % أحرف في سكونها الإعدام % % ولها في جود إدغام % % 2(@)(@@) % في وجود الحق الذي لا سواه % % فعليه به ومنه السلام % % 3(@)(@@) % إن ادغام أحرف الكون فيه % % لسكون بها هو الأنعام % % 4(@)(@@) % فإذا ما تحركت فك عنها % % فاستقلت وفاتها الإدغام % % 5(@)(@@) % ولهذا يقول ربي له ما % % سكن الليل والنهار دوام % % 6(@)(@@) % فهي لولا السكون ما كان ادغا % % م لها فيه أو عليها قيام % % 7(@)(@@) % أحرف الكائنات عن نفس الحق % % ق اختلاف لها به وانقسام % % 8(@)(@@) % فإذا ما تركبت كلمات % % هي تتلى وجمعهن كلام % % 9(@)(@@) % قوله الحق فاستمع يا ابن ودي % % والسوى باطل هو الأوهام % % 10(@)(@@) % جل رب به البرية قاموا % % لا بعلم والعالمون استقاموا % % PageV01P1459 البحر : - 1(@)(@@) % وجودكم تتنموا إنه دائم % % لكم تحبونه كل به هائم % % 2(@)(@@) % وكل واحد مقدر في العدم حائم % % لم يدران وجوده به القائم % % PageV01P1460 البحر : - 1(@)(@@) % عيسى ابن مريم روحي % % لقتل دجال جسمي % % 2(@)(@@) % فإن يمت بي قتيلا % % أكن أنا الروح باسمي % % 3(@)(@@) % والجسم من قبل ميت % % لكنه حي رسم % % 4(@)(@@) % كذلك الروح ميت % % والحي حظي وقسمي % % 5(@)(@@) % يا حق يا حي إني % % ظهرت عنك بوسمي % % 6(@)(@@) % فاحسم عن الغير قلبي % % بالعين أبلغ حسم % % 7(@)(@@) % الكنز أنت وكل % % عليك شكل طلسم % % PageV01P1461 البحر : - 1(@)(@@) % أنا الوجود كما أني أنا العدم % % على الصراط وما زلت بي القدم % % 2(@)(@@) % أكون طورا وجود إن ظهرت به % % وتارة عدما يخفى وينكتم % % 3(@)(@@) % والغيب غيب على ما كان في أزل % % ولا سواه ولا شيء سواه هم % % 4(@)(@@) % هذاه ما هو هذا ما هو استمعوا % % والعرب والعجم لا عرب ولا عجم % % 5(@)(@@) % والكل فإن كما قال الإله لنا % % والكل ليس بفان هذه نعم % % 6(@)(@@) % قل اعملوا قال ربي ثم قال لهم % % لا يقدرون على شيء وإن زعموا % % 7(@)(@@) % فحقق الأمر والخلق اللذين هما % % لله وافهم هي الأنوار والظلم 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms291# % % 8(@)(@@) % واقرأ كتابك ما جاء النبي به % % إليك وهو كتاب الله يا فهم % % 9(@)(@@) % واعلم بأن لك الشرع القويم هدى % % لا زيغ فيه وإن زاغت به أمم % % 10(@)(@@) % واترك هدى العقل لا تحفل بعقلتهواسأل من الله فتحا في شريعته في نص قرآنه تبدو لك الحكم % واتبع هدى الله فهو الحاكم الحكمسقط بيت ص % % PageV01P1462 11(@)(@@) % فعلمنا كله ضدان ما اجتمعا % % على خلاف الذي في العقل منبهم % % 12(@)(@@) % ضدان ضدان أمر الله أجمعه % % حكم قديم به أهل النهى حكموا % % PageV01P1463 البحر : - 1(@)(@@) % يا حادي الركب سر بي % % نحو المقام المعظم % % 2(@)(@@) % وانشد هنالك قلبي % % بين الحطيم وزمزم % % PageV01P1464 البحر : - 1(@)(@@) % موجود معدوم لا موجود لا معدوم % % عبد كثير الخطا في حضرة القيوم % % 2(@)(@@) % عالم غدا ماله علم ولا معلوم % % لا فعل بل فعله الممدوح والمذموم % % PageV01P1465 البحر : - 1(@)(@@) % أهل المحبة في السرور الدائم % % لا يحزنون ولا بلوم اللائم % % 2(@)(@@) % هم كذاه في هذه الدنيا كما % % هم هكذا في يوم يقظة نائم % % 3(@)(@@) % لهم الملاح مظاهر الغيب الذي % % هو ظاهر بجمال وجه دائم % % 4(@)(@@) % يتنعمون به هنا وهناك لا % % يخفى عليهم بالمليح القائم % % 5(@)(@@) % أرواحهم كالشمس في أفق السما % % وجسومهم شفاقة كغمائم % % 6(@)(@@) % هم أهل كشف يفرحون بربهم % % في كل صورة أهيف متلائم % % 7(@)(@@) % لهم الجمال محقق بمحاسن % % تبدو الملاح بها كزهر كمائم % % 8(@)(@@) % ولغيرهم معنى الجلال مظاهر ال % % شهوات تعشقها نفوس بهائم % % 9(@)(@@) % في هذه الدنيا بذاك تنعموا % % وكذاك في الأخرى كطير حائم % % 10(@)(@@) % نفس لهم لا روح تعلمهم بمن % % هو نافخ فيهم لنيل غنائم % % PageV01P1466 11(@)(@@) % لا يعرفون الحظ غير بطونهم % % وفروجهم شوقا بكل ملائم % % 12(@)(@@) % ولذاك قال الله فيها كل ما % % هم يشتهون يحثهم بعزائم % % 13(@)(@@) % أهل الحجاب لهم نعيم جسومهم % % وعذابهم أن قابلوا بجرائم % % 14(@)(@@) % ونعيم أهل الكشف رؤية طلعة ال % % محبوب بالوجه الجميل الدائم % % 15(@)(@@) % هو حظهم في النشأتين من الذي % % عشقوه بالقلب الطهور الصائم % % 16(@)(@@) % إذ لا نعيم سوى نعيم شهوده % % يوم اللقا بلطائف وكرائم % % 17(@)(@@) % هو ظاهر لعيونهم وقلوبهم % % بمباسم لعس ولين قوائم % % 18(@)(@@) % من كل وضاح الجبين كأنه % % بدر التمام محوط بتمائم % % 19(@)(@@) % يختال كالغصن الرطيب بقامة % % لقلوبهم فيها غناء حمائم % % 20(@)(@@) % كالبرق يلمع عن وجود حقيقة % % نفحاتها 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms292# فاحت بطيب نسائم % % PageV01P1467 البحر : - 1(@)(@@) % قالوا غدا نأتي ديار الحمى % % ديار من هم أهل سلمى همو % % 2(@)(@@) % فينظر القلب إليهم بهم % % وينزل الركب بمغناهمو % % 3(@)(@@) % وكل من كان مطيعا لهم % % وكان مشغوفا بذكراهمو % % 4(@)(@@) % فإنه إن جاءهم خائفا % % أصبح مسرورا بلقياهمو % % 5(@)(@@) % قلت فلي ذنب فما حيلتي % % أخشى بأن يطردني عنهمو % % 6(@)(@@) % عندي الحيا منهم ولي خجلة % % بأي وجه أتلقاهمو % % 7(@)(@@) % قالوا أليس العفو من شأنهم % % وكم نجا عبد رجا منهمو % % 8(@)(@@) % والصفح من أخلاقهم دائما % % لاسيما ممن ترجاهمو % % PageV01P1468 البحر : - 1(@)(@@) % نظرت إلى وجه الذي الكل هالك % % سوى وجهه والوجه ماهو مبهم % % 2(@)(@@) % فظنوا بأني ناظر في وجوههم % % عيون لهم عما أشاهده عموا % % 3(@)(@@) % اأترك وجها بالمحاسن مشرقا % % وأنظر وجها حشوه القيح والدم % % 4(@)(@@) % ومن يفتري يوما علينا بظنه % % بنا السوء ذاك الظن منه المحرم % % 5(@)(@@) % ويجزيه عنا ربه سوء حالة % % هنا وله يوم الحساب جهنم % % 6(@)(@@) % ولا زال مطرودا عن الله دائما % % ويمنع عما نحن فيه ويحرم % % PageV01P1469 البحر : - 1(@)(@@) % إن هذا الأحد الديموم % % وهو بسم الله لي محزوم % % 2(@)(@@) % هكذا الله وجود واحد % % خالص محض ولا مفهوم % % 3(@)(@@) % وجميع الخلق أفعال له % % وهي شيء كله معدوم % % 4(@)(@@) % واعرفوه كل شيء هالك % % جاء إلا وجهه المعلوم % % 5(@)(@@) % وهو في أفعاله أجمعها % % ظاهر حي هو القيوم % % 6(@)(@@) % فافهموا يا قوم ما قلت لكم % % فسوى قولي هو الموهوم % % 7(@)(@@) % والوجود الحق أنتم كلكم % % وهو أمر عندنا مكتوم % % 8(@)(@@) % وهو موقوف على ذوق الفنا % % فيه فافنوا وعليه دوموا % % 9(@)(@@) % وأخرجوا لله عن أفعاله % % وهي أنتم وإليه قوموا % % 10(@)(@@) % وبه فاتحدوا لا تنظروا % % لسواه فالسوى مذموم % % PageV01P1470 11(@)(@@) % لمتى الشرك الخفي يبقى إلى % % موتكم لا كان هذا الشوم % % 12(@)(@@) % إنما الشرك ضلال كله % % فاتركوه إنه مسموم % % 13(@)(@@) % جل رب معنا إذ نحن لا % % نحن وهو الراحم المرحوم % % 14(@)(@@) % أهل تقوى أهل قل مغفرة % % وهو القول لنا المرقوم % % 15(@)(@@) % والذي أول هذا جاحد % % قول حق وهو المحروم % % 16(@)(@@) % عقله سول في الغي له % % ماله شم هو المزكوم % % 17(@)(@@) % ولنا طوبى زهت والمنتهى % % ولأرباب الحجي الزقوم % % 18(@)(@@) % شجرات هن في الذكر أتت % % ضاق عنها الحلق والحلقوم % % 19(@)(@@) % فانيات كلها في أمرنا % % أين منهم عجم والروم % % 20(@)(@@) % كلهم في أسر عقل ربطوا 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms293# % % يا طيورا حول ماء حوموا % % PageV01P1471 البحر : - 1(@)(@@) % لنا غرق لكنا في القدم % % ببحر الوجود وبحر العدم % % 2(@)(@@) % فيحكم هذا على بعضنا % % وهذا على بعضنا قد حكم % % 3(@)(@@) % وسبح في النور منا الفتى % % ويسبح جاهلنا في الظلم % % 4(@)(@@) % وبحر إن عندي هما يجريان % % فبحر بلحم وبحر بدم % % 5(@)(@@) % وبينهما برزخ ظاهر % % فلا يبغيان لأمر أتم % % 6(@)(@@) % وبرزخه عالم الجبروت % % خيال له الغي والعقل هم % 7(@)(@@) % فكن رجلا عارفا لا تكن % % جهولا وربك عنك انبهم % % 8(@)(@@) % وتعبد طيف الخيال الذي % % ترى في المنام أفق لا تنم % % 9(@)(@@) % فهذا الوجود وأفعاله % % هي العدم المحض لا غير ثم % 10(@)(@@) % وحاصله أنه لا سوى % % وبعض خلاف لبعض وتم % % PageV01P1472 البحر : - 1(@)(@@) % كلنا بالتخصيص والتعميم % % نفخ روح من أمر رب قديم % % 2(@)(@@) % منه يبدو بنا الوجود ويخفى % % لمع برق كلمح طرف قويم % % 3(@)(@@) % مدة العمر هكذا نحن قوم % % لم نزل في الخلق الجديد العديم % % 4(@)(@@) % نحن جسم وذلك النفخ فيه % % فعل رب بنا رؤوف رحيم % % 5(@)(@@) % فإذا الجسم زال بالموت يبقى % % ذلك النفخ دون جسم رميم % % 6(@)(@@) % وله منه صورة تتجلى % % أشبهته في شكل ذاك الأديم % % 7(@)(@@) % ثم إن قامت القيامة قامت % % نشئات الجسوم بالتقويم % % 8(@)(@@) % لنعيم مؤبد ليس يفنى % % أو عذاب مسرمد في الحميم % % 9(@)(@@) % نحن قوم يا ابن الفوارس صعب % % أمرنا بين مقعد ومقيم % % 10(@)(@@) % نعشق الأوجه الحسان فنفنى % % في تجلي جمال كل وسيم % % PageV01P1473 11(@)(@@) % قذفتنا نواظر العشق لما % % إن رأونا أسرى لواحظ ريم % % 12(@)(@@) % أم رأوا قبلنا الملبى يحج % % طاف بالبيت من وراء الحطيم % % 13(@)(@@) % كلما رؤية الحبيب أردنا % % جاءنا الصعق مثل موسى الكليم % % 14(@)(@@) % فعسى أن يعيرنا منه عينا % % لنراه بها على التكريم % % 15(@)(@@) % فيكون الرائي الذي هو مرئى % % يا عظيما يرجى لكل عظيم % % PageV01P1474 البحر : - 1(@)(@@) % قد ظهر مني وجودي % % وهو في الغيب القديم % % 2(@)(@@) % وتجلى في شهودي % % فأنا العلم العليم % % 3(@)(@@) % وهو ربي وهو حسبي % % ملئ قلي فتحقق يا نديم % % 4(@)(@@) % دور % % 5(@)(@@) % قام يختال بقامه % % كقضيب الخيزران % % 6(@)(@@) % وجهه راخي لثامه % % منه لو نلت الأمان % % 7(@)(@@) % يا رفيقيضاق زيفي % % واحريقيفي هوى الوجه الوسيم % % 8(@)(@@) % دور % % 9(@)(@@) % راح يزهو في غلائل % % وهو عن ذاك منزه % % 10(@)(@@) % أهيف حلو الشمائل % % فيه قلبي يتنزه % % PageV01P1475 11(@)(@@) % وجه باهيطلق زاهي % % عنه ساهيعاذلي 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms294# ذاك اللئيم % % 12(@)(@@) % دور % % 13(@)(@@) % سبح اسم الله يا من % % قد رأى حسن المليح % % 14(@)(@@) % والذي بالله آمن % % يعشق الوجه الصبيح % % 15(@)(@@) % لا تماريصنع باري % % حكم جاريفي الصراط المستقيم % % 16(@)(@@) % دور % % 17(@)(@@) % صل يا ربي وسلم % % لي على طه الرسول % % 18(@)(@@) % وهو للخير معلم % % وهو مفتاح الوصول % % 19(@)(@@) % وهو ساقيخمر باقي % % فيه راقيللغني عبد سقيم % % PageV01P1476 البحر : - 1(@)(@@) % هو صبغة العدم الذي هو كلنا % % طورا وطورا نحن صبغته افهموا % % 2(@)(@@) % فإذا رأيناه لنا هو صابغ % % هو باطن ولنا الظهور المبهم % % 3(@)(@@) % وإذا صبغناه يكون ولم تكن % % فتحققوا يا قوم هذا واعلموا % % 4(@)(@@) % هو واحد وهو الوجود وغيره % % عدم كثير ليس يحصى مظلم % % PageV01P1477 البحر : - 1(@)(@@) % لله في الكون تحريك وتسكين % % قل لي فما تفعل القوم المجانين % % 2(@)(@@) % وكل أفعالنا لا شك حادثة % % فافطن فهل لسوى الرحمن تكوين % % 3(@)(@@) % لا النار تحرق إلا عند محتجب % % أعمى ولا تقطع الجرم السكاكين % % 4(@)(@@) % وإنما هي أسباب مرتبة % % عندي لفاعلها المحتار تعيين % % 5(@)(@@) % يا راقد الليل قم فجر النجاة بدا % % ما راح حين ووافى مثله جين % % 6(@)(@@) % بك احتجبت فلا تنظر إليك تفز % % واخرج عن الكل تأتيك البراهين % % 7(@)(@@) % وانحل شيئا فشيئا في الوجود وذب % % حتى توافى مقاما فيه تمكين % % 8(@)(@@) % فكلهم هو فاسمع وهو غيرهمو % % ان الزجاج له بالشمس تلوين % % 9(@)(@@) % واحرص على الأمر والنهي اللذين هما % % نتيجة الخلق يا ماء ويا طين % % 10(@)(@@) % الله سر خفي ليس يدركه % % إلا اللبيب الذي فينا له دين % % PageV01P1478 البحر : - 1(@)(@@) % ليت لو كنت إذا قلت أنا % % أملك الروح وأحوى البدنا % % 2(@)(@@) % إنما هذا حبيبي حاضر % % وأنا يا ليت شعري من أنا % % 3(@)(@@) % قام ناسوتي بمن أوجده % % حيث لاهوتي إلى الباري دنا % % 4(@)(@@) % يا أولي الألباب هل من أحد % % منصفي قد ضاعت النفس هنا % % 5(@)(@@) % هل أنا الناسوت في ثقلته % % هل أنا اللاهوت حيث اكتمنا % % 6(@)(@@) % أم أنا وهم ولما ظهر ال % % حق ولى باطلي وانطحنا % % 7(@)(@@) % ليست الأكوان الأعرضا % % مالها عمن به قامت غنى % % 8(@)(@@) % أو هي الظل فسل عن شاخص % % هو منا دائما أولى بنا % % 9(@)(@@) % وأنا اليوم لقد قمت به % % أندب الربع وأبكي الدمنا % % 10(@)(@@) % بحجاب النفس قومي حجبوا % % ويحهم كم يدعون الفطنا % % PageV01P1479 11(@)(@@) % غرهم علم رسوم قنعوا % % منه 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms295# بالقشر فظنوه المنى % % 12(@)(@@) % وإذا ما جهلوا أنفسهم % % أي شيء عرفهوه ههنا % % 13(@)(@@) % يعبدون الله خوفا من لطى % % فلظى قد عبدوا لا ربنا % % 14(@)(@@) % ولدار الخلد صلوا لاله % % مثل قوم يعبدون الوثنا % % 15(@)(@@) % أنا مفتون بمحبوب به % % كل من قد كان قبلي فتنا % % 16(@)(@@) % ليس في غرب ولا في مشرق % % إنه في بيت قلبي سكنا % % 17(@)(@@) % أينما وليت ألقى وجهه % % ظاهرا أفديه وجها حسنا % % 18(@)(@@) % ولكم صمت وصليت له % % بل به حتى محوت الزمنا % % 19(@)(@@) % ومقام القرب كم طفت به % % ومني فيها لقد نلت مني % % 20(@)(@@) % وإذا شئت به تحيى فمت % % والبقا إن رمته سر الفنا % % PageV01P1480 البحر : - 1(@)(@@) % إني أنا لست أنا % % فليت شعري من أنا % % 2(@)(@@) % صورة لاهوت بدت % % في شكل ناسوت دنا % % 3(@)(@@) % كلاهما مستحدث % % من عدم ومن فنا % % 4(@)(@@) % وذاك لا ذاك له % % ومن هنا ليس هنا % % 5(@)(@@) % والقصد مني لم يقع % % على سؤالي والمنى % % 6(@)(@@) % فافهم كلامي وانتفع % % به ودع عنك العنا % % 7(@)(@@) % اياك اياك بأن % % يوقعك الجهل بنا % % 8(@)(@@) % ولا تكن معتديا % % ولا تكن مفتتنا % % 9(@)(@@) % ودع كلام عصبة % % بنا أسؤوا الظننا % % 10(@)(@@) % من شر هم ما أحد % % بين البرايا أمنا % % PageV01P1481 11(@)(@@) % قد شبهوا خالقهم % % وجسموه علنا % % 12(@)(@@) % ونسبوا إليه ما % % كان بهم مكتمنا % % 13(@)(@@) % وهم على ذا درجوا % % وفيه عاشوا بالهنا % % 14(@)(@@) % وعبدوه مثل قو % % م يعبدون الوثنا % % 15(@)(@@) % قد نشأوا في بدع % % لا يعوفون السننا % % 16(@)(@@) % وهذه حالتهم % % قد جعلوها ديدنا % % 17(@)(@@) % فاحذر تكن مستمعا % % لهم بهم ممتحنا % % 18(@)(@@) % وخذ بما لاح ودع % % عنك التباسا فتنا % % 19(@)(@@) % بالله يا من هجروا % % وعظموني شجنا % % 20(@)(@@) % وقد أطالوا سهري % % وأحرموني الوسنا % % PageV01P1482 21(@)(@@) % وملء قلبي شغف % % ودمع عيني هتنا % % 22(@)(@@) % ولي إليهم ابدا % % فرط غرام وعنا % % 23(@)(@@) % رفقا بصب دنف % % بكم غدا مرتهنا % % 24(@)(@@) % إيان ولي منكمو % % ابصر وجها حسنا % % 25(@)(@@) % بشعب وادي سلم % % جآ ذر لحن لنا % % 26(@)(@@) % لما رنوا وانعطفوا % % خلت سيوفا وقنا % % 27(@)(@@) % أواه من جفوتهم % % وليس لي عنهم غنى % % 28(@)(@@) % يا ليتهم لو سمحوا % % ولي أتموا المننا % % 29(@)(@@) % عهدي بهم قد نزلوا % % بالسفح من وادي منى % % 30(@)(@@) % من كل روح جعلوا % % للأمر منهم بدنا % % PageV01P1483 31(@)(@@) % وشرفوا منازلا % % حلوا بها ودمنا % % 32(@)(@@) % وكل حي جعلوا % % بالوصف فيه وطنا % % 33(@)(@@) % وشغلوا الكون بهم % % وهيجوه شجنا % % 34(@)(@@) % فهام 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms296# في بهجتهم % % ولم ينل منهم مني % % 35(@)(@@) % يخفق قلبه بهم % % وكم يقاسي محنا % % 36(@)(@@) % وجوده تحريكه % % وفقده إن سكنا % % PageV01P1484 البحر : - 1(@)(@@) % بالله اي من رماني بالصد والهجران % % جسد بالوصال فإني متيم ولهان % % 2(@)(@@) % وليس عندي صبر عن اللقايا يا حبيبي % % والقلب في كل وقت يذوب بالأشجان % % 3(@)(@@) % خاطب بروق الروابي تكف عني وميضا % % فإنها خطفتني بذلك اللمعان % % 4(@)(@@) % وقل لنسمة ذاك الحمى تجود علينا % % بطيب ورد وإلا بنفحة الريحان % % 5(@)(@@) % يا من تنكر حتى عداه قد جهلوه % % وعن محبيه لم يخف كيفما قد كان % % 6(@)(@@) % ظهرت في كل شيء والشيء غيرك عندي % % وأنت أنت يقينا وكل شيئ فان % % 7(@)(@@) % إن قلت أنك إني جهلت ذاتك اذلا % % وجود مع نور حق لظلمة الأكوان % % 8(@)(@@) % وإن أقل أنت غيري فقد زعمت شريكا % % لأن ذاتك تأبى يكون معها ثان % % 9(@)(@@) % وكيف والحق حق وما سواه محال % % وأين محض كمال من خالص النقصان % % 10(@)(@@) % هذا الوجود خيال وكلنا في منام % % وليس يوجد إلا حقيقة الإنسان % % PageV01P1485 11(@)(@@) % فاكشف قناع التعامي عن وجه قلبك وانظر % % تجد حبيبك أدنى إليك منك الآن % % 12(@)(@@) % واحذر تشبه بشيء ما قد وصلت إليه % % ونزه العقل عما للعقل منه بان % % 13(@)(@@) % وخذ كؤوس التصابي واخدم لأرباب صدق % % وقف بحضرة جودي وادخل معي للحان % % 14(@)(@@) % واهجر عصابة جهل مرادهم لك سوء % % وسواسهم منه فاحذر في سائر الأزمان % % 15(@)(@@) % يزخرفون كلاما يحذرونك من أن % % تروم معرفة الله فكل ذا بهتان % % 16(@)(@@) % وهل لنفسك قل لي على إلهك فضل % % حتى تخاف عليها وتأمن الرحمن % % 17(@)(@@) % يا بارق الغور فرف فقد خطفت فؤادي % % وفي الأضالع رعد ومدمعي هتان % % 18(@)(@@) % والجسم زاد نحولا من القلى والتنائي % % والصبر قد زال عني في مدة الهجران % % 19(@)(@@) % يا سائق الظعن رفقا فإن قلبي عليل % % راكب جواد التصابي سائر مع الركبان % % 20(@)(@@) % بالله إن جئت تجدا ورامة والمصلى % % فاقرأ سلامي عليهم وقل هنا ولهان % % PageV01P1486 البحر : - 1(@)(@@) % كلامنا نعرفه % % نحن ومن يعرفنا % % 2(@)(@@) % وإنما يفهمه % % في الناس من يفهمنا % % 3(@)(@@) % ولم يكن يجهله % % إلا الذي يجهلنا % % 4(@)(@@) % ومن يرده فليكن % % ملازما مجلسنا % % 5(@)(@@) % أو مجلسا لكل من % % تلمذة الصدق لنا % % 6(@)(@@) % وقلبه معتقد % % ويحسن الظن بنا % % 7(@)(@@) % ويسمع التقرير عن 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms297# % % كلامنا من فمنا % % 8(@)(@@) % ولا يقلد جاهلا % بالحق فيما طعنا % % 9(@)(@@) % فالناس فيهم حسد % % وسوء ظن كمنا % % 10(@)(@@) % والجهل بالله لهم % % قد صار شيئا حسنا % % PageV01P1487 11(@)(@@) % وكل شخص يدعى % % ما ليس فيه علنا % % 12(@)(@@) % ولا حياء عندهم % % منهم ولا من ربنا % % 13(@)(@@) % وأن يكونوا جهلوا % % فروضهم والسننا % % 14(@)(@@) % فقربهم هو الردى % % وبعدهم هو المنى % % PageV01P1488 البحر : - 1(@)(@@) % نور هذا الوجود بالإيمان % % لا بشمس ولا نجوم دواني % % 2(@)(@@) % وبه الشمس والنجوم جميعا % % مشرقات من رحمة الرحمن % % 3(@)(@@) % ولهذا الكسوف لا يعتريها % % منه إلا عن غفلة وتواني % % 4(@)(@@) % أي قلب من القلوب تجلى % % فيه ربي بغير ما إيمان % % 5(@)(@@) % وعلوم الجميع علوا وسفلا % % وارادت عن وردة كالدهان % % 6(@)(@@) % فلك الماء والتراب مضيء % % بضياء الإيمان في كل آن % % 7(@)(@@) % وبه لم يزل يدور ويبدي % % صورا بابتداعه ومعاني % % 8(@)(@@) % أمن الكل من قلى وبعاد % % عندما آمنوا وهو في تداني % % 9(@)(@@) % ولهم خلعة المهيمن جاءت % % ثم فازوا من سلبها بالأمان % % 10(@)(@@) % فتراهم بها يميلون زهوا % % بين نيل المراد والحرمان % % PageV01P1489 11(@)(@@) % وعلى كل حالة هو أولى % % بالذي جاء منه للأكوان % % 12(@)(@@) % وهو إيمانه بهم فلهذا % % مؤمن جاء عنه في القرآن % % 13(@)(@@) % والمواليد معدن ونبات % % ثم حيوانها مع الإنسان % % 14(@)(@@) % وكذلك الآباء مع أمهات % % كلهم في غد من الحيوان % % 15(@)(@@) % مؤمنات جميعها بإله % % واحد ماله كما قال ثاني % % 16(@)(@@) % ولهذا تأتي غدا شاهدات % % مثل ما جاء في حديث الأذان % % 17(@)(@@) % وشروط الشهادة الآن فيها % % ثبتت بالدليل والبرهان % % 18(@)(@@) % حيث عنها الإله أخبر بالتس % % بيح والنطق والفنا في العيان % % 19(@)(@@) % فتحقق بكل ما قلت وافهم % % تلق لب الكمال والعرفان % % PageV01P1490 البحر : - 1(@)(@@) % كل تحريك تراه وسكون % % فانتقال من حياة لمنون % % 2(@)(@@) % وجميع الكون إن حققته % % فلأشارات إلى كن فيكون % % 3(@)(@@) % نظرة أعطت وأخرى أخذت % % كل شيء في الورى عال ودون % % 4(@)(@@) % فهي عين وإذا شئت فقل % % أعين سالت لنا منها عيون % % 5(@)(@@) % وهي ذات حذرتنا نفسها % % صعبت فينا وإن شاءت تهون % % 6(@)(@@) % حجبت عنها بها أعيننا % % فظهور من بطون وبطون % % 7(@)(@@) % كل يوم هو في شان وذا % % عجب فاليوم من تلك الشؤون % % 8(@)(@@) % وشؤون هي في شأن بدت % % باختفاء عن سناه وكمون % % 9(@)(@@) % ثم ذاك الشان في شأن إلى % % لا إلى مما تراه العارفون % % 10(@)(@@) % فاجتهد 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms298# في السير واقرع بابه % % وادخل الحضرة والبيت المصون % % PageV01P1491 11(@)(@@) % لا تظن الباب يا باب سوى % % أنت والبيت سوى أنت يكون % % 12(@)(@@) % وافهم الأمر به يا أمره % % تعرف الأمر مع الكل فنون % % PageV01P1492 البحر : - 1(@)(@@) % أجهلت قدرك أيها الإنسان % % أنت الجميع وبعضك الأكوان % % 2(@)(@@) % والنور والظلمات أنت حقيقة % % وسوى كمالك كله نقصان % % 3(@)(@@) % يكفيك أن الحق سمعك قد غدا % % ويدا ورجلا فيك وهو عيان % % 4(@)(@@) % والكون أجمعه لأجلك خادم % % يسعى وأنت المالك السلطان % % 5(@)(@@) % فإذا انتبهت لبست ثوب سعادة % % وإذا غفلت فثوبك الخسران % % 6(@)(@@) % ولطيفك الجنات أنت منعم % % فيها غدا وكثيفك النيران % % 7(@)(@@) % انزع ثيابك عنك وابق بغيرها % % تعرف مقامك أيها الإنسان % % PageV01P1493 البحر : - 1(@)(@@) % سواكم روى عنكم سوانا روى عنا % % وأعياننا منكم وأعيانكم منا % % 2(@)(@@) % عشقناكمو لما عشقنا نفوسنا % % وكل فتى منا إلى نحوكم حنا % % 3(@)(@@) % وأنتم وجود الكل والكل شخصكم % % وإن كان كل تابعا في الهوى فنا % % 4(@)(@@) % هي الروح دبت في طبيعة جسمها % % وقد أظهرت خوفا وقد أظهرت أمنا % % 5(@)(@@) % وأفنى بما أبقى هواها لها بها % % من الكل بل أبقى هواها بما أفنى % % 6(@)(@@) % وكانت هي المعنى وألفا ظنا لها % % فيا حسن ألفاظ تكون لها معنى % % 7(@)(@@) % قديمة عهد والحدوث حجابها % % غدونا لها ظهرا فصارت لنا بطنا % % 8(@)(@@) % هي الكرم والعنقود والعاصر الذي % % له انتسبت أيضا وبائعها غبنا % % 9(@)(@@) % هي ألحان والكاسات والطاس والطلا % % ودن الحميا والذي صنع الدنا % % 10(@)(@@) % هي القوم والساقي ومجلسنا على % % يمين الحمى الشرقي والروضة الغنا % % PageV01P1494 11(@)(@@) % فإن شئت فاشربها من الكل أو فخذ % % من البعض كأسا طعمه العذب ما أهنى % % 12(@)(@@) % وإلا تكن في أسر وهمك واقفا % % مع العقل تستدعي السرور والحزنا % % 13(@)(@@) % يقلبك الوسواس في كل ساعة % % وأعماك حتى أصم لك الأذنا % % 14(@)(@@) % سقى الله روضات المقاصد واللقا % % من الكل حيث الكل منها رأوا حسنا % % 15(@)(@@) % ولم تعشق العشاق غير جمالها % % ولكنهم تاهوا بأسمائها الحسنى % % 16(@)(@@) % وليلى ولبنى في البرية قصدهم % % وما قصدهم ليلى ولا قصدهم لبنى % % 17(@)(@@) % ولو لم يكونوا عارفين بها ولو % % لها جحدوا ظلما ولو تبعوا الظنا % % PageV01P1495 البحر : - 1(@)(@@) % أيها القوم السكارى % % بعقار وهو دون % % 2(@)(@@) % خمر أرباب المعاني % % هو أعلى ما يكون % % 3(@)(@@) % فبطون من ظهور % % وظهور من بطون 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms299# % % 4(@)(@@) % انفقوا الأجسام محقا % % في هوى عين العيون % % 5(@)(@@) % ثم بالأرواح ساروا % % في غرام وشجون % % 6(@)(@@) % ثم عنهم خلعوا ما % % عاقهم دون المنون % % 7(@)(@@) % فاعلموا يا أهل ودي % % إن من عز يهون % % 8(@)(@@) % واسمعوا من قول ربي % % فله نحن الشئون % % 9(@)(@@) % أنفقوا ما قد جمعتم % % من علوم وفنون % % 10(@)(@@) % وذوات وصفات % % وخفوق وسكون % % PageV01P1496 11(@)(@@) % فلقد قال إله الخل % % ق في الذكر المصون % % 12(@)(@@) % لن تنالوا البر حتى % % تنفقوا مما تحبون % % PageV01P1497 البحر : - 1(@)(@@) % من أسخط الناس في مرضاة خالقه % % فذلك الفائز الناجي بلا مين % % 2(@)(@@) % تأتي الأنام بلام في القيامة من % % تقى وهذا الذي يأتي بلا مين % % PageV01P1498 البحر : - 1(@)(@@) % تب إلى الله من ذنوبك يكفيك % % وإن لم تكن من العابدينا % % 2(@)(@@) % وتحقق بأن ذنبك عمن % % هو إياك قد لهاك يقينا % % PageV01P1499 البحر : - 1(@)(@@) % يا مشتغلا بكامل الإيمان % % تسبيحك لم يخرج عن الإمكان % % 2(@)(@@) % فأعبده فقد رضى منك بذا % % العارف قال قبلنا سبحاني % % PageV01P1500 البحر : - 1(@)(@@) % قد بالغ في الظهور والكتمان % % حتى حارت به أولوا العرفان % % 2(@)(@@) % والسر على التحقيق كإلاعلان % % قد أودعه في هذه الأكوان % % PageV01P1501 البحر : - 1(@)(@@) % يا طلعة من أحب في ذا الكون % % تختال علينا بثياب الصون % % 2(@)(@@) % والخال غدا يلوح في وجنته % % قد حير عقلي بسواد اللون % % PageV01P1502 البحر : - 1(@)(@@) % نحن الذين أين كنا حبنا معنا % % ومالنا في الحقيقة غيره معنى % % 2(@)(@@) % يجود لا حاتما نرجو ولا معنا % % مع ناس بالمنع قائم والعطا معنا % % PageV01P1503 البحر : - 1(@)(@@) % من كان حبه معه هيهات يلقى حزن % % يامن صفاته لانواع التجلي حزن % % 2(@)(@@) % وقل لمن غيد أفكاره علينا جزن % % هذي الفعائل ترى في أي مذهب جزن % % PageV01P1504 البحر : - 1(@)(@@) % أن أقبل السعد وزال العنا % % 2(@)(@@) % وقد سكرنا بكؤوس المنى % % 3(@)(@@) % وموسم الأفراح لي أن دنا % % 4(@)(@@) % يا ربة العود خذي في الغنا % % وحركي من صوته ما وني % % 5(@)(@@) % قم يا نديمي موسم القرب جا % % 6(@)(@@) % وأبدل اليأس لنا بالرجا % % 7(@)(@@) % ولا تخف ظلم ظلام دجا % % 8(@)(@@) % فإن مسود قميص الدجى % % لونه الصبح بما لونا % % 9(@)(@@) % حسن ملاح الكون لي هيما % % 10(@)(@@) % وتوبتي وهبتها اللوما % % PageV01P1505 11(@)(@@) % فرحت مغرى في الهوى مغرما % % 12(@)(@@) % وفاز بالتوبة قوم وما % % تاب من التوبة إلا أنا % % PageV01P1506 البحر : - 1(@)(@@) % إن غبت عن عياني % % فأنت في جناني % % 2(@)(@@) % وإن حجبت فكري % % بكل 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms300# ما أعاني % % 3(@)(@@) % فالنور نصب عيني % % والذكر في لساني % % PageV01P1507 البحر : - 1(@)(@@) % أنا كعبة كل المعاني % % حجت إلي بلا تواني % % 2(@)(@@) % وكذا الكمالات التي % % أبد سواي لها يعاني % % 3(@)(@@) % كم طاف بي علم وجا % % ء مقبلا حجر اللسان % % 4(@)(@@) % وأتى إلى عرفات قل % % بي واقفا يبغي بياني % % 5(@)(@@) % يا واحدا ما في العيا % % ن له ولا في الغيب ثاني % % 6(@)(@@) % أنا جفناك المكسور يا % % عيني ومنك الجبر داني % % 7(@)(@@) % ولذا يكون الحسن في % % هذا وفي حور الجنان % % 8(@)(@@) % قم للمدام أخا الغرا % % م وطف بنا في كل حان % % 9(@)(@@) % واكرع حميا القدس من % % صور البرية في قناني % % 10(@)(@@) % واشرب معي بيد المدي % % ر فحبذا أيدي الحسان % % PageV01P1508 11(@)(@@) % وأدخل كنيسة ديرها % % واعكف على بنت الدنان % % 12(@)(@@) % متجردا عن كل ما % % يلهيك عن هاتيك فاني % % 13(@)(@@) % واسكر بها مع كل شم % % اس يميل كغصن بان % % 14(@)(@@) % واسمع مثانيك التي % % تتلى على صوت المثاني % % 15(@)(@@) % ودع الجهول يظن من % % ك ظنونه في كل آن % % 16(@)(@@) % وأعلم بأنك لست تهدي من تحب مدى الزمان % % 17(@)(@@) % أفتسمع الصم الذي % % ن بعيشهم هم في افتتان % % 18(@)(@@) % أم أنت تهدي العمى عن % % ذل الضلالة والهوان % % 19(@)(@@) % أتريد ترشد عصبة % % لشجاعهم قلب الجبان % % 20(@)(@@) % خذ ما صفا لك بينهم % % واترك لهم كدر الأواني % % PageV01P1509 21(@)(@@) % وانزل إليهم لا تك % % لفهم إلى أعلى المكان % % 22(@)(@@) % ولربما انقلبوا فلا % % تنكر لهم قلب العيان % % PageV01P1510 البحر : - 1(@)(@@) % إنما نحن للإله شئون % % فهو فينا في كل يوم يكون % % 2(@)(@@) % نزلت شمسه المنازل منا % % فظهور لها بنا وكمون % % 3(@)(@@) % ها هو الحق ملء قلبي وجسمي % % وعظامي وكل ما هو دون % % 4(@)(@@) % لا حلولا وإنما هو فعل % % خلفه فاعل به محصون % % 5(@)(@@) % نحن تقديره القديم وفينا % % حدثت بالوجود منه فنون % % 6(@)(@@) % كيفما شاء عنه في الكون كنا % % واحتراك لنا به وسكون % % 7(@)(@@) % فيه كنا قدما فقيل عليم % % كل شيء في علمه موزون % % 8(@)(@@) % ثم لما عنه قد صدرنا % % كان فينا والعين منه عيون % % 9(@)(@@) % فتسمى بقادر ومريد % % عندما عز فهو ليس يهون % % 10(@)(@@) % كل هذا ونحن نحن جميعا % عدم يحتويه كاف ونون % % PageV01P1511 11(@)(@@) % وهو قح هو الوجود على ما % % هوفيه والفتح غيث هتون % % 12(@)(@@) % جاءت السنة الحصان بهذا % % وأتانا كتابه المكنون % % 13(@)(@@) % فتمسك 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms301# به بإرشاد هاد % % يقتفيه فإنه المأمون % % 14(@)(@@) % واترك المنكر الذي ليس يدري % % فهو عن ذوق طعمه الملعون % % 15(@)(@@) % إن لله في الوجود قلوبا % % عقلها عند من سواها جنون % % PageV01P1512 البحر : - 1(@)(@@) % لمائه كلنا أواني % % ونحن في نفسه معاني % % 2(@)(@@) % والكل عن أمره ظلال % % وذاته الشمس في البيان % % 3(@)(@@) % مراتب بالوجود صارت % % حقائق الغيب والعيان % % 4(@)(@@) % عن كل أوصافه أبانت % % عند الورى مثل ترجمان % % 5(@)(@@) % وجوده لا يزال منها % % يطلى بنيل وزعفران % % 6(@)(@@) % وبظلام وبضياء % % وبضراب وبطعان % % 7(@)(@@) % وبجماد وبنبات % % وبأناس وحيوان % % 8(@)(@@) % وبرجال وبنساء % % وأهل شيب وعنفوان % % 9(@)(@@) % وكل عقل وكل حسن % % والمتمنين والأماني % % 10(@)(@@) % وكل فهم وكل وهم % % وكل وقت وكل آن % % PageV01P1513 11(@)(@@) % وملكوت وجبروت % % وكل أنس وكل جان % % 12(@)(@@) % وكل ساق وكل كاس % % وكل خمر وكل حان % % 13(@)(@@) % وبحسان وبقباح % % وبهموم وبتهاني % % 14(@)(@@) % وكل شيء صرفت عنه % % ولم يصرح به لساني % % 15(@)(@@) % توهمات الجميع فيه % % من فرط عز ورفع شان % % 16(@)(@@) % يجل عنها وعن مقالي % % يجل فيما به سباني % % 17(@)(@@) % والعلم بالجهل قد تساوى % % عجزهما عنه في قران % % 18(@)(@@) % وكل عبد بما لديه % % في محنة منه وافتتان % % 19(@)(@@) % وقد تجلى بكل شيء % % والشيء من عالم الكيان % % 20(@)(@@) % فضا منه فضاء كل % % كالنور في صبغة القناني % % PageV01P1514 21(@)(@@) % وفيه كانت فصار فيها % % بقائم والجميع فانى % % 22(@)(@@) % وهو على ما عليه قدما % % بلا انتقال ولا اختزان % % 23(@)(@@) % ولا اتصال ولا انفصال % % ولا افتراق ولا اقتران % % 24(@)(@@) % ولا التفات ولا جهات % % ولا زمان ولا مكان % % 25(@)(@@) % ولا حلول ولا اتحاد % % ولا تناء ولا تداني % % 26(@)(@@) % فإن تكن فاهما وإلا % % فدع كلامي لمن يداني % % 27(@)(@@) % ولا تعب ما جهلت منه % % بقلبك القاصر الجبان % % 28(@)(@@) % وخل ما قلته لقوم % % يطرب أسماعهم أذاني % % 29(@)(@@) % فإن داعي الكمال مني % % يسمع من شاء بامتنان % % 30(@)(@@) % وكل شيء للحق شان % % والحق باد في كل شان % % PageV01P1515 31(@)(@@) % مسك له الكل طيب عرف % % معنى له الكل كالمباني % % 32(@)(@@) % نحن التقادير منه فيه % % كالكيف والكم والمكان % % 33(@)(@@) % وهو الوجود القديم صرفا % % وماله في الوجود ثاني % % 34(@)(@@) % رآه موسى الكليم نارا % % عنه بدا الكل كالدخان % % 35(@)(@@) % ورام منه بأن يراه % % فجاءه عنه لن تراني % % 36(@)(@@) % لكونه رائيا فلو لم % % يرى رآه إليه داني % % 37(@)(@@) % لكن علا شوقه عليه % % منه عذا مالك العنان 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms302# % % 38(@)(@@) % وزاد حتى أزال عنه % % تثبتا كان في الجنان % % 39(@)(@@) % ومنه قد صار في ذهول % % وفي اندهاش لما يعاني % % 40(@)(@@) % والشوق يوهى العقول جدا % % في رؤية الأوجه الحسان % % PageV01P1516 41(@)(@@) % حتى إذا دك منه طورا % وعاد بالصعق في اكتمان % % 42(@)(@@) % أفاق مستغفرا منيبا % مسبحا طالب الأمان % % 43(@)(@@) % ما قال إني رأيت أو ما % % رأيت إذ كان في عيان % % 44(@)(@@) % كان محبا له فأضحى % % محبوبه الرائق الدنان % % 45(@)(@@) % وما عليه اختفى تبدى % % له جهارا بلا تواني % % 46(@)(@@) % وصار بيديه كل شيء % % قد كان أخفاه باجتنان % % 47(@)(@@) % وللمثاني آيات حق % % تظهر في نغمة المثاني % % 48(@)(@@) % يذوقها كل ذي فؤاد % % بنيل قرب الإله العاني % % 49(@)(@@) % سماؤه بالغرام شقت % % وورده صار كالدهان % % 50(@)(@@) % يموت بالفكر ثم يحيى % % بالذكر في القلب واللسان % % PageV01P1517 51(@)(@@) % ويستريب الجهول منه % % والله يلقيه في امتحان % % 52(@)(@@) % ولا تراه يعيش إلا % % في فرط ذل وفي هوان % % 53(@)(@@) % وإن يمت فالجزاء نار % % لأنه للضلال جاني % % 54(@)(@@) % وبافتراء وباعتداء % % أنكر حقا وبامتهان % % 55(@)(@@) % ولا يضيع الإله شيئا % فكيف إيذاء ذي العيان % % PageV01P1518 البحر : - 1(@)(@@) % أنا المعروف لي بالله ألوان % % فرحمن وشيطان وإنسان % % 2(@)(@@) % لقوم ذا وقوم ذا وقوم ذا % % على مقدار ما تنويه إخوان % % 3(@)(@@) % ولا وصف بدا لي قط من ذاتي % % ولا نعت ولا حال ولا شان % % 4(@)(@@) % ولكن كيفما قد كنت يا خلي % % تراني فيك إشراك وإيمان % % 5(@)(@@) % تجلى بي على أهل الصفار بيوقد شاء التجلي بي على قوم لهم خبث وتكدير وحرمان % فذكر عندهم أتلى وقرآنسقط بيت ص % % 6(@)(@@) % ومالي لا ولا للغير من صنع % % وكل الصنع للمولى كما دانوا % % 7(@)(@@) % وقولي عند قوم محض تحقيق % % وقوم عندهم ذا القول هذيان % % 8(@)(@@) % وريح المسك لا يدريه من مز كوم % % وضوء الشمس غابت عنه عميان % % 9(@)(@@) % ويا من أنكروني احذروا مني % % فأرواح لكم راحت وأديان % % 10(@)(@@) % وكفوا القول عن ذكري بتقبيح % % ورائي عصبة في الله شجعان % % PageV01P1519 11(@)(@@) % ورائي كل ذي باع إذا مدت % % فلا إنس له تبقى ولا جان % % 12(@)(@@) % وأسياف صقيلات وأرماح % % طويلات وضراب وطعان % % 13(@)(@@) % هي الأطوار لي فيها مقامات % % ولا يدري سوى من فيه عرفان % % 14(@)(@@) % ألا يا قوم كم ذا العيش في جهل % % أما فيكم لدين الحق إذعان % % 15(@)(@@) % لحاكم في فشار 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms303# القوم قد شابت % % وما تابت فآثام وعصيان % % 16(@)(@@) % ولما أسكرتكم خمرة الدنيا % % عميتم من تقى يوليه رحمان % % 17(@)(@@) % فتقواكم ظنون في الورى ساءت % % وتلبيس على حق وبهتان % % 18(@)(@@) % وعند الله هنتم والورى لما % % رجال الله جهلا عندكم هانوا % % 19(@)(@@) % إذا خفتم لباريكم فمن ذنب % % يريكم في ذاك الذنب شيطان % % 20(@)(@@) % وإن رمتم لشرع أن تقيموه % % على مثلي لكم قد قام ميزان % % PageV01P1520 21(@)(@@) % وأنتم في هواكم كيفما شئتم % % فعلتم بينكم زور وإدهان % % 22(@)(@@) % حقوق العبد من أدنى معاصيكم % % ومنكم في حقوق الله طغيان % % 23(@)(@@) % أبحتم عرض من لم يرض ما أنتم % % عليه من نفاق فهو خسران % % 24(@)(@@) % وزخرفتم مقالات بها انغرت % % كهول في مذماتي وشبان % % 25(@)(@@) % أجار الله من وسواسكم قلبي % % ومني وقيت عن ذاك آذان % % PageV01P1521 البحر : - 1(@)(@@) % اعبد على الكشف وأدخل ساحة الإحسان % % وأطلق جوادك بلا لجم ولا أرسان % % 2(@)(@@) % وحاصل الأمر عند العى والملسان % % الروح للحق مثل النفس للإنسان % % PageV01P1522 البحر : - 1(@)(@@) % يقول الناس دع ما فيه ظن % % به الوسواس فيك سطا علينا % % 2(@)(@@) % ونحن الأصدقاء ولم نرجح % % عليك سواك بين العالمينا % % 3(@)(@@) % لقد كذبوا بذاك وهل صديق % % تراه بصدق الشيطان فينا % % PageV01P1523 البحر : - 1(@)(@@) % إن قلت لم أقدر ولم أستطع % % أدفع عني كيد شيطاني % % 2(@)(@@) % أو قلت ذا صعب على همتي % % فأنت في كذب وبهتان % % 3(@)(@@) % إن الشياطين من النار هم % % والماء منه كل إنسان % % 4(@)(@@) % والماء يطفي النار والنار لا % % تسطو على الماء بسلطان % % 5(@)(@@) % ما لم يحل بينهما موصل % % لبرد ماء حر نيران % % 6(@)(@@) % وههنا النفس غدت حائلا % فاكسر إناء الحائل الفاني % % 7(@)(@@) % يبقى بعيدا عنك يخشاك أن % % تطغيه شيطانك الداني % % PageV01P1524 البحر : - 1(@)(@@) % طرف الذي طلب التحقيق سهران % % وعقله بشراب الله سكران % % 2(@)(@@) % وقلبه فيه أخلاق مطهرة % % حميدة وهو بالتوفيق ملآن % % 3(@)(@@) % إن رمت أخلاقه الحسنى تعددها % % فلتصغ منك لما أبديه أذان % % 4(@)(@@) % هي الوقار كذا التقصير في أمل % % ونية ورحمة أيضا وإيمان % % 5(@)(@@) % نصيحة غيرة شكر مجاهدة % % تصوف ثم إخلاص وإحسان % % 6(@)(@@) % خوف من الله مع حزن له أدب % % وذكر موت وتفويض وإيقان % % 7(@)(@@) % وغبطة في التقى رشد مرابطة % % شجاعة ثم تحقيق وإمعان % % 8(@)(@@) % وكظم غيظ وعفور والخشوع كذا % % رفق وصدق وما تبديه فتيان % % 9(@)(@@) % والحب في الله 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms304# ثم البغض فيه به % % أنس وشوق إلى المولى وأشجان % % 10(@)(@@) % وحسن ظن وزهد عفة وحيا % % أمانة ثم تسليم وإذعان % % PageV01P1525 11(@)(@@) % صلابة لدينا ثم الاستقامة مع % % قناعة وعلى الرحمن تكلان % % 12(@)(@@) % ورقة والتأني والتملق في % % تحصيل علم لدى شيخ له شان % % 13(@)(@@) % سلامة الصدر من حقد مراقبة % % فراسة ذكر أن الله منان % % 14(@)(@@) % والمدح والذم فيه الاستواء كذا % % تفكر حكمة تنمو وتزدان % % 15(@)(@@) % مروءة واعتقاد لا ابتداع به % % حب الخمول فلا يدريه إنسان % % 16(@)(@@) % صبر وسعى وحلم توبة ورجا % % محبة الله حتى عنه رضوان % % 17(@)(@@) % وفاء عهد وإنجاز لموعدة % % عقاب نفس عتاب فيه تبيان % % 18(@)(@@) % تواضع ثم إيثار مشارطة % % حساب نفس له في العدل ميزان % % 19(@)(@@) % كذا عبودية حرية وكذا % % إرادة والسخا ما فيه نقصان % % 20(@)(@@) % وقصد طول حياة للتقى وإلى % % خير مبادرة إذ فيه إمكان % % PageV01P1526 21(@)(@@) % فخذ حميدة أخلاق ثمانية % % أتت وسبعين عقد فيه مرجان % % PageV01P1527 البحر : - 1(@)(@@) % تعلم حفظ آفات اللسان % % لتحظى بالأمان وبالأماني % % 2(@)(@@) % وخذها إنها سعبون شيئا % % حكت في نظمها عقد الجمان % % 3(@)(@@) % فكفر والخطا مع خوف كفر % % وكذب ثم سب في هوان % % 4(@)(@@) % وفحش غيبة ونميمة مع % % مراء والجدال وطعن جاني % % 5(@)(@@) % وسخرية وتعريض ولعن % % ونوح واشتغال بالأغاني % % 6(@)(@@) % مخاصمة وإفشاء لسر % وخوض في مجال با فتتان % % 7(@)(@@) % سؤال المال والدنيا نفاق % % بقول والكلام لدى الأذان % % 8(@)(@@) % سؤالك عن أغاليط وأيضا % % عوام الناس عن صعب المعاني % % 9(@)(@@) % وتغليظ الكلام وأمر نكر % % ونهى العرف مع خطأ اللسان % % 10(@)(@@) % سؤال عن عيوب الناس أخذ % % لذي الوجهين في أمر الدهان % % PageV01P1528 11(@)(@@) % كلامك حالة القرآن يتلى % % وبعد طلوع فجر للعيان % % 12(@)(@@) % وحالة خطبة وبمسجد مع % % دخول خلا لحاجات تعاني % % 13(@)(@@) % وفي حال الصلاة وفي جماع % % وفتح القول عند كبير شان % % 14(@)(@@) % وبالألقاب نبز مع يمين % % غموس أو بغير الله داني % % 15(@)(@@) % إخافة مؤمن وفضول قول % % وإكثار اليمين بلا تواني % % 16(@)(@@) % على غير الدعاء لأهل ظلم % % بدون إصلاح كل آن % % 17(@)(@@) % سؤال إمارة ووصاية مع % % توليه على دار وخان % % 18(@)(@@) % ورد كلام متبوع وقطع % % لقول الغير شعر ذو امتهان % % 19(@)(@@) % تناجي اثنين مدح مع مزاج % % ونطق بالذي هو غير عاني % % 20(@)(@@) % على النفس الدعاء ورد عذر % % أتى بالرأي تفسير القرآن % % PageV01P1529 21(@)(@@) % سؤالك عن حلال أو 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms305# طهور % % بغير محله قصد امتحان % % 22(@)(@@) % وسجع والفصاحة مع سلام % % على الذمي وذي فسق مهان % % 23(@)(@@) % كذا متغوط أو بائل مع % % كلام الأجنبية في مكان % % 24(@)(@@) % وإرشاد لنحو طريق سوء % % وإذن في المعاصي للمداني % % 25(@)(@@) % وآفات العبادات اللواتي % % تعدت والتي قصرت لعاني % % 26(@)(@@) % كذا الآفات ضمن معاملات % % وآفات السكون بلا بيان % % 27(@)(@@) % وقد تمت بعون الله فاخلص % % لناظمها دعاءك بالجنان % % PageV01P1530 البحر : - 1(@)(@@) % لله حمدي دائما في الورى % % حمد مقيم النعمة القاطن % % 2(@)(@@) % على انصلاح القلب والجسم من % % سوء بليد ضل أو فاطن % % 3(@)(@@) % أمامنا الأعظم في ظاهر % % وشيخنا الأكبر في الباطن % % PageV01P1531 البحر : - 1(@)(@@) % قل لمن قال عن ذوي العرفان % % ورجال التحقيق والإيمان % % 2(@)(@@) % طاعنا في اعتقادهم أوهاما % % وخيالا جميع ذي الأكوان % % 3(@)(@@) % مثل أهل الضلال ذا منك جهل % % بنصوص الحديث والقرآن % % 4(@)(@@) % إن أهل الضلال ليسوا بشيء % % حاضر عندهم ذوي إذعان % % 5(@)(@@) % لينا لوا ثبوت ما غاب عنهم % % بل همو بالجميع في كفران % % 6(@)(@@) % أين منهم أهل التحقق بالله % % وأهل الكمال والعرفان % % 7(@)(@@) % ونجوم الهدى لكل جهول % % ورجوم لعصبة الشيطان % % 8(@)(@@) % وإذا الشمس أشرقت لا تراها % % دائم الدهر أعين العميان % % 9(@)(@@) % إنما الله عندنا هو حق % % لا سواه والكل في بطلان % % 10(@)(@@) % واستمع أينما تولوا فثم ال % % وجه والوجه ذاته يا معاني % % PageV01P1532 11(@)(@@) % لا تقل أينما تفيد مكانا % % وعليه استحال كل مكان % % 12(@)(@@) % إنما تلك باعتبارك إذ أن % % ت مع الكل في الفنا سيان % % 13(@)(@@) % ما عدا الوجه فهو لا شك حق % % والسوى فيه باطل باقتران % % 14(@)(@@) % وكذا قول ربنا كل شيء % % هالك كل من عليها فاني % % 15(@)(@@) % وحديث النبي ألا كل شيء % % ما خلا الله باطل منك داني % % 16(@)(@@) % ولهذا بربهم قام قومي % % عابديه على تقى وعيان % % 17(@)(@@) % جملة العارفين في كل وقت % % حسنات الدهور والأزمان % % 18(@)(@@) % أيها المنكر الذي ليس يدري % % ما الذي فيه من غرور يعاني % % 19(@)(@@) % قد أضاع الزمان بالقيل والقا % % ل وفرط الضلال والصغيان % % 20(@)(@@) % يحسب النفس منه تخلق شيئا % % فهو منها يبيت أسر الأماني % % PageV01P1533 21(@)(@@) % كل ما أنت فيه مع من يحاكي % % ك به في اللسان أو في الجنان % % 22(@)(@@) % عندكم ربكم خيال ووهم % % وهو شيء في عقلكم ذو معاني % % 23(@)(@@) % وجميع الأكوان حق وصدق % % عندكم 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms306# بالعيان والبرهان % % 24(@)(@@) % لو عقلتم تعاكس الأمر فيكم % % وانجلى يا مظاهر الخذلان % % 25(@)(@@) % لكن البغي والتنكر منكم % % أوصلاكم فينا إلى الحرمان % % 26(@)(@@) % ولهذا ملتم على ما سوى الله % % سكارى كميلة الهيمان % % 27(@)(@@) % وعميتم بحبكم كل شيء % % وصممتم عن الهدى والبيان % % 28(@)(@@) % وافتتنتم بما سوى الله جهرا % % واشتغلتم بلذة الحيوان % % 29(@)(@@) % حيث أشقت نفوسكم شهوات % % عن حصول السعادة المتداني % % 30(@)(@@) % فقفوا عند حدكم لاتغطوا % % خبثكم بالفجور والبهتان % % PageV01P1534 31(@)(@@) % ههنا غابة بها أسد حرب % % مشرعات رماحهم للطعان % % PageV01P1535 البحر : - 1(@)(@@) % أنا في الملاح على يقين % % ومحبة المحبوب ديني % % 2(@)(@@) % فتنكبوا يا زائغي % % ن عن الصراط المستبين % % 3(@)(@@) % نار المحبة عندكم % % والنور عندي في كميني % % 4(@)(@@) % وأنا الذي في بحر قد % % س الذات أسبح كل حين % % 5(@)(@@) % وعيونكم وقلوبكم % % يسبحن في ماء وطين % % 6(@)(@@) % متمتع أنا في الجما % % ل بحضرة الحق المبين % % 7(@)(@@) % ونفوسكم مفتونة % % بزخارف الماء المهين % % 8(@)(@@) % ماذا دهاكم يا كلا % % ب النبح من ليث العرين % % 9(@)(@@) % لو لم يكن في الحسن ما % % فيه من السر الحزين % % 10(@)(@@) % ما الله أعمى عنه أع % % ينكم بأسلوب متين % % PageV01P1536 13(@)(@@) % وأضلكم عن وجهه ال % % باقي بمعدوم مهين % % 14(@)(@@) % ورمى بكم للطمس في % % بطن الطبائع كالجنين % % 15(@)(@@) % أو يستوي الإلهام بالأ % % ملاك مع نطق القرين % % 16(@)(@@) % لكم الوساوس في الصدو % % ر من السطور بلا معين % % 17(@)(@@) % ولنا علوم الحق بال % % تحقيق عن حق اليقين % % 18(@)(@@) % ومحبة الوجه الملي % % ح لدي في حصن حصين % % 19(@)(@@) % وخواطري رأت الهدى % % في حب وضاح الجبين % % 20(@)(@@) % والقلب يظفر كل وقت منه بالعقد الثمين % % 21(@)(@@) % وجمال دحية قد حكا % % ه ظهور جبريل الأمين % % 22(@)(@@) % لا في الحنين له أنا % % كلا ولا أنا في الأنين % % PageV01P1537 23(@)(@@) % بل في التواصل واللقا % % وموارد الماء المعين % % 24(@)(@@) % لا قيد لي في مطلق ال % % حسن المفرح للحزين % % 25(@)(@@) % أبدا ولا بنواظر % % ألهو ولا قلب رهين % % 26(@)(@@) % ومحبتي نور بلا % % نار ولا شيء مشين % % 27(@)(@@) % وهي التي أنا عابد % % ربي بها طوال السنين % % 28(@)(@@) % خلصتها مني ومن % % غيري بتشديد ولين % % 29(@)(@@) % وبها عرفت تجليا % % ت الله بالنور المبين % % 30(@)(@@) % وغدا بها ألقى المنى % % وأكون من أهل اليمين % % PageV01P1538 البحر : - 1(@)(@@) % أنا النور المبين % % أنا الحق اليقين % % 2(@)(@@) % أنا القرآن أتلي % % أنا الحبل المتين % % 3(@)(@@) % أنا عرش التجلي 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms307# % % أنا الروح الأمين % % 4(@)(@@) % أنا الكرسي مني % % بدا السر الكمين % % 5(@)(@@) % أنا المحفوظ لوحي % % أنا الحصن الحصين % % 6(@)(@@) % وما عندي تراب % % ولا ماء مهين % % 7(@)(@@) % سوى الأسرار عنها % % أضاء لي الجبين % % 8(@)(@@) % وقلبي مستنير % % وحقي مستبين % % 9(@)(@@) % فحول عن طريقي % % وأمري يا لعين % % 10(@)(@@) % وإن أنكرت حالي % % وكنت لي تشين % % PageV01P1539 11(@)(@@) % وتعبد كل وقت % % هواك وتستعين % % 12(@)(@@) % لك الدينار رب % % ومعبود معين % % 13(@)(@@) % وبالأغيار تلهو % % ويطغيك القرين % % 14(@)(@@) % ولا عتب على من % % له دنياه دين % % 15(@)(@@) % وفي الشهوات أضى % % له قلب رهين % % 16(@)(@@) % ولا يدري شمال % % بما حوت اليمين % % PageV01P1540 البحر : - 1(@)(@@) % أنا النور المبين ولا أكنى % % أنا التنزيل يعرفني ابن فني % % 2(@)(@@) % يضل الله بي خلقا كثيرا % % ويهدي بي كثيرا فاستبني % % 3(@)(@@) % ولكن لا يضل سوى نفوس % % بإنكار بغت وبسوء ظن % 4(@)(@@) % وإني الملك والملكوت فضلا % % وإني صحرة الوادي وإني % % 5(@)(@@) % ولما كنت منه بغير فصل % % ولا وصل شهدت الكل مني % % 6(@)(@@) % أحقق من أريد بعلم حقي % % وأسكر من أشاء بخمر دنى % % 7(@)(@@) % وأسعد باللقا قوما وأشقى % % بهجري آخرين وبالتجني % % 8(@)(@@) % مقامي ليس يحصل بالترجي % % وحالي ليس يدريك بالتمني % % 9(@)(@@) % وما بات الهبات ولا العطايا % % بمسدود على أهل التهني % % 10(@)(@@) % ولكن القلوب لها عليها % % من الأغيار ينشأ كل كن % PageV01P1541 11(@)(@@) % وبالتوحيد يعرف كل شيء % % ويجهل كل شيء بالتثني % % 12(@)(@@) % هي الأبواب قد سدت جميعا % % سوى بابي فدع عنك التعني % % 13(@)(@@) % وما أنا شاعر وجيمع نظمي % % بعيد عن مدى شعر المغني % % 14(@)(@@) % وميز بين الهام وشعر % % وصرح بالمقام ولا تكني % % 15(@)(@@) % ولا تكفر بجهلك في كلامي % % ودعه لمن يوحد يا مثني % % 16(@)(@@) % ولا تعجل على ما لست تدري % % فإنك سوف تدري بالتأني % % 17(@)(@@) % نصحتك فاستطع صبرا معي إن % % سلكت عن الروافض نهج سني % % 18(@)(@@) % تعالى أصلنا عمن كل فرع % % وجل عن التزوج والتبني % % 19(@)(@@) % وكل فتى على كل مقدار ما قد % % سقاه بكفه الساقي يغنى % % 20(@)(@@) % وحين رويت عنه روت بصدق % % جميع رجال هذا العصر عني % % PageV01P1542 البحر : - 1(@)(@@) % نحن قوم نهوى الوجوه الحسانا % % وبها الله زادنا إحسانا % % 2(@)(@@) % وعلينا من المهيمن عين % % أوسعتنا تحققا وعيانا % % 3(@)(@@) % ولنا قد أدير خمر التجلي % % وبه صار كأسنا ملآنا % % 4(@)(@@) % وشهدنا الوجود حوضا وكانت % % صور الكل عندنا كيزانا % % 5(@)(@@) % إن من نال شربة 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms308# منه يوما % % لا تراه على المدى ظمآنا % % 6(@)(@@) % وأناس قد بدلوا الدين عنه % % طردوا فامتلوا له طغيانا % % 7(@)(@@) % كل ما حاولوه أبعد عنهم % % لا تلمهم أضلهم من هدانا % % 8(@)(@@) % حوض خير الأنام عذب زلال % % بارد سائغ لمن يتعانى % % 9(@)(@@) % بيننا وعده على الحوض نلقى % % صاحب الحوض مثل ما يلقانا % % 10(@)(@@) % وبوجه المليح سر شهود % % عنه ما زالت الورى عميانا % % PageV01P1543 11(@)(@@) % ضل عنه من قبل إبليس جهلا % % وأبى عن كماله نقصانا % % 12(@)(@@) % وإليه اهتدت ملائكة الله % % وزادت بأمره إيقانا % % 13(@)(@@) % حضرات الأسما به قد تبدت % % وأبينت عند الجميع بيانا % % 14(@)(@@) % وعليه السجود كان دليلا % % فتسمى الإسلام والإيمانا % % 15(@)(@@) % كن به عارفا ودم فيه مغرى % % وتقرب له تكن إنسانا % % 16(@)(@@) % والذي حاد عنه فهو جهول % % حيث سماه ربه شيطانا % % 17(@)(@@) % إنه الباب لكن الفتح صعب % % زاد قوما خوفا وقوما أمانا % % 18(@)(@@) % كأس حسن وكأس عشق وإني % % بهما الآن لم أزل سكرانا % % 19(@)(@@) % هذه في العموم جملة حالي % % وتعالى من أنزل الفرقانا % % 20(@)(@@) % ولأهل الخصوص مني مقام % % كل حال في ذاته يتفانى % % PageV01P1544 21(@)(@@) % كان في بيت عزتي من قديم % % ثم صارت ثيابه الحد ثانا % % 22(@)(@@) % وهو قرآننا بليلة قدر % % قد تلوناه ساعة وتلانا % % 23(@)(@@) % إن تكن قد مضت لأحمد صحب % % إننا لم نزل له إخوانا % % 24(@)(@@) % هكذا جاء في الأحاديث عنه % % ودلو أنه يكون رآنا % % 25(@)(@@) % ظاهر العلم في الصحابة باد % % وهو علم التكليف إنسا وجانا % % 26(@)(@@) % والذي قد بدا بنا هو علم % % زاد عن كل باطن إبطانا % % 27(@)(@@) % وهو علم التشريف علم المزايا % % ليس ظنا لنا ولا حسبانا % % 28(@)(@@) % بل يقين محقق أخذته % % قومنا بالشهود آنا فآنا % % 29(@)(@@) % وهو علم الإله يظهر فيمن % % قرأ الله ذاته وقرآنا % % 30(@)(@@) % خذه منا بالحال والقال وادخل % % لحمانا وافرغ لنا عن سوانا % % PageV01P1545 31(@)(@@) % هو عشق لا وهم لا فهم فيه % % لا تواني لا فكر لا إذعانا % % 32(@)(@@) % يملأ العقل يملأ الحس نورا % % كل من عز في معانيه هانا % % 33(@)(@@) % هو أمر ترى الجبان شجاعا % % إن بدا منه والشجاع جبانا % % 34(@)(@@) % ليس يدريه غير صاحب قرب % % كلما أبعد الجميع تدانى % % PageV01P1546 البحر : - 1(@)(@@) % عين حق إنسانها الإنسان % % وهي نار عنها سواها دخان % % 2(@)(@@) % ما لها صورة سوى كل شيء 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms309# % % أمرها لابس لنا عريان % % 3(@)(@@) % إن بدت أفنت الجميع بوجه % % مشرق زان حسنه الإحسان % % 4(@)(@@) % وإذا ما اختفت أعارت سناها % % كل شيء فلاحت الأعيان % % 5(@)(@@) % بنت عقل أهل السوى عبدوها % % ليت لو كان عندهم إذعان % % 6(@)(@@) % يحسبون الذي يرون كمالا % % وهو لو يعقلونه نقصان % % 7(@)(@@) % ويظنون إنهم في حصول % % والذي حصلوا هو الحرمان % % 8(@)(@@) % ينصرون الهوى على الشرع عمدا % % وعليهم يستحوذ الشيطان % % 9(@)(@@) % بعدت درة الوجود عليهم % % فبأصدافها لهم لو ذان % % 10(@)(@@) % علمهم قشر علمنا ولبوب % % بقشور عن الدواب تصان % % PageV01P1547 11(@)(@@) % عندهم من عقولهم حشرات % % ولهم من نفوسهم ثعبان % % 12(@)(@@) % ربنا الله لا سواه وأما % % ربهم فهو عسجد وجمان % % 13(@)(@@) % تعسوا أين هم وأين هوانا % % هو فينا عز وفيهم هوان % % 14(@)(@@) % فهو إنا يزداد بالله طيبا % % وهواهم بخبثهم يزدان % % 15(@)(@@) % أمحلت أرضهم وغيث علوم % % هو في كل أرضنا هتان % % 16(@)(@@) % وهي تعلو عنهم وتدنو إلينا % % وهي فيهم خوف وفينا أمان % % 17(@)(@@) % إن لله في الوجود رجالا % % كل حين بدين أحمد دانوا % % 18(@)(@@) % أسلموا ثم آمنوا بأمور % % تم فيها الإسلام والإيمان % % 19(@)(@@) % هم على الجهل فطرة ليس يدرو % % ن وما العلم غير ما فيه كانوا % % 20(@)(@@) % هم أولوا العلم لا سواهم وفيه % % لم يزالوا لما عليه تفانوا % % PageV01P1548 21(@)(@@) % قطعوا أنهم له بيقين % % فاستراحوا وزالت الأوثان % % 22(@)(@@) % ورموا بالسوى على الكشف منهم % % في بحار الفنا فبان البيان % % 23(@)(@@) % أمة بالمهيمن الحق قامت % % وعلى عرشها استوى الرحمن % % 24(@)(@@) % دخلت في غيب الغيوب فعنها % % قد تولى مكانها والزمان % % 25(@)(@@) % ذهب الجسم وانطوى الروح عنهم % % ومضى الخمر واستقل الدنان % % 26(@)(@@) % هم على حالهم به من قديم % % وكذا عندهم به الأكوان % % 27(@)(@@) % وهو أيضا على الذي هو فيه % % ما عليه بنا تغير شان % % 28(@)(@@) % حلة أهل ديننا لبسوها % % ما بها بدعة ولا طغيان % % PageV01P1549 البحر : - 1(@)(@@) % نحن من المنسوبين % % لسنا من المطلوبين % % 2(@)(@@) % أرسل ذا القول لنا % % والدنا بالتعيين % % 3(@)(@@) % في سبب نعرفه % % بشارة للتحصين % % 4(@)(@@) % وأمر القائل إن % % يخبرنا في ذا الحين % % 5(@)(@@) % وذاك في نصف جما % % دى أول بالتهوين % % 6(@)(@@) % لمائة والألف من % % هجرة ذخر الناجين % % 7(@)(@@) % وكان في واقعة الرؤيا لبعض الأهلين % % 8(@)(@@) % أحفظه ألفاظها % % وزاده في التلقين % % 9(@)(@@) % وقال قل له كذا % % عني لفرط التحنين % % 10(@)(@@) % قإنه يعلم ما 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms310# % % أقوله بالتبيين % % PageV01P1550 11(@)(@@) % نعم به أعلم عن % % قطع بدون التخمين % % 12(@)(@@) % يعنى به نسبتنا % % لله حقا والدين % % 13(@)(@@) % وللعلوم والتقى % % وسيرة المهديين % % 14(@)(@@) % وللكمال والمعا % % رف العلى والتمكين % % 15(@)(@@) % وللمقامات التي % % تمكينها في تلوين % % 16(@)(@@) % وللجمال والجلا % % ل أرث آل ياسين % % 17(@)(@@) % وإرث من كلمه ال % % حق بطور سينين % % 18(@)(@@) % ومن عليه أنبتت % % شجرة من يقطين % % 19(@)(@@) % وكل مأمون على الوحي الذي بجبرين % % 20(@)(@@) % والنسب الذاتي الذي % % جل عن المخلوقين % % PageV01P1551 21(@)(@@) % الطاهر الظاهر في % % شهم أشم العرنين % % 22(@)(@@) % فماله من أحد % % يطلبه بالتكوين % % 23(@)(@@) % بعزة الشان وما % % لديه من فرط اللين % % 24(@)(@@) % فليس مطلوبا بالمن % % سواه من معلومين % % 25(@)(@@) % وهو الذي يطلب من % % شاء مقام المسكين % % 26(@)(@@) % أعزنا الله به % % وزادنا في التمكين % % 27(@)(@@) % ولم تزل حلتنا % % بحسنه في تحسين % % 28(@)(@@) % ما أسفر الصبح وصا % % ح طيره بالتلحين % % 29(@)(@@) % ولبس الروض من الزهور ثوب التزيين % % 30(@)(@@) % وما انجلى الغصن على % % نسيم عرف النسرين % % PageV01P1552 البحر : - 1(@)(@@) % لقد نظرت قوم بطرف لهم قذى % % 2(@)(@@) % فلم يشهدوا الأحجاب جمال ذي % % 3(@)(@@) % وقوم لقد شموا شذا روضها الشذى % % 4(@)(@@) % يقولون لي ما العلم ما السر ما الذي % % هو الجوهر الغالي عن البحر خبرنا % % 5(@)(@@) % على صحبنا غنت فصاح طيورنا % % 6(@)(@@) % وذات الحميا أشرقت في صدورنا % % 7(@)(@@) % تجلت علينا تنجلي فوق طورنا % % 8(@)(@@) % فقلت لهم هذي مطالع نورنا % % ومغربها فينا ومشرقها منا % % 9(@)(@@) % إلى حضرات الحق كان ارتفاعنا % % 10(@)(@@) % ومنا لقد مدت إلى الغيب باعنا % % PageV01P1553 11(@)(@@) % وفي أزل الآزال زاد انتفاعنا % % 12(@)(@@) % على الدرة البيضاء كان اجتماعنا % % ومن قبل خلق الخلق والعرش قد كنا % % 13(@)(@@) % سحاب غيوب الذات تمطر ماءنا % % 14(@)(@@) % ومن حط قدرا كيف يدري سماءنا % % 15(@)(@@) % ولما استرحنا واطرحنا عناءنا % % 16(@)(@@) % تركنا البحار الزاخرات وراءنا % % فمن أين تدري الناس أين توجهنا % % 17(@)(@@) % كشفنا عن الوجه الجميل غياهبا % % 18(@)(@@) % وقد صار منا السر للكل ناهبا % % 19(@)(@@) % ومن حضرة الرحمن نلنا مواهبا % % 20(@)(@@) % ألا يا لقومي قد قرأتم مذاهبا % % ولم تدر يا قومي رموز مذاهبنا % % PageV01P1554 21(@)(@@) % فوائدكم أضحت قيود رهيننا % % 22(@)(@@) % وعنكم لقد أخفي مقام أميننا % % 23(@)(@@) % ويا علماء الرسم هل من معيننا % % 24(@)(@@) % مذاهبكم نرفو بها بعض ديننا % % ومذهبنا عمى عليكم وما قلنا % % PageV01P1555 البحر : - 1(@)(@@) % طلعة كلها جمال % % إن بدت تفتن الجميع % % 2(@)(@@) % حال زال مال آل % % كل شيء إلى 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms311# الفنا % % 3(@)(@@) % زان عشاقها الكمال % % يتهنى بها الخليع % % 4(@)(@@) % طال صال عال غال % % للمسرات والهنا % % 5(@)(@@) % دور % % 6(@)(@@) % نحن آيات وجهها % % ليس ندري بكنهها % % 7(@)(@@) % صاح احب ساح طاح % % من إلى نحوها دنا % % 8(@)(@@) % لا تحم حول شبهها % % من ترى ذاك يستطيع % % 9(@)(@@) % لاح راح فاح ناح % % طائر الشوق بالمنى % % 10(@)(@@) % دور % % PageV01P1556 11(@)(@@) % صل ربي على النبي % % أحمد المصطفى الهمام % % 12(@)(@@) % فاق راق ساق شاق % % مغرم القلب بالغرام % % 13(@)(@@) % منه عبد الغني حبي % % رفعة الجاه والمقام % % 14(@)(@@) % حاق تاق لاق ذاق % % كلما غرد الحمام % % 15(@)(@@) % دور % % 16(@)(@@) % وعلى الآل والصحاب % % من حووا رفعة الجناب % % 17(@)(@@) % باه وجاه شاه تاه % % كل من غيرهم أجاب % % 18(@)(@@) % وذوي القرب والخطاب % % من غدا برقهم لميع % % 19(@)(@@) % ساه واه فاه لاه % % بسواهم من اعتنى % % PageV01P1557 البحر : - 1(@)(@@) % بدا جمال حبيبي % % والكل قد غابوا % % 2(@)(@@) % والمضني أفنى لا يرفق % % بالمغرم العاني % % 3(@)(@@) % والوجه منه نصيبي % % والحسن جلباب % % 4(@)(@@) % لي أغنى أقنى قد أشرق % % في عين إنسان % % 5(@)(@@) % وفوق قلبي خطيبي % % للسر وهاب % % 6(@)(@@) % والأدنى أدنى بالأبرق % % فرد بلا ثاني % % 7(@)(@@) % يا صاحبي فاقتدي بي % % إني أنا الباب % % 8(@)(@@) % فالمعنى معنا ما أفرق % % عن سر روحاني % % 9(@)(@@) % دور % % 10(@)(@@) % يا واحد قد تثنى % % فأشركوا فيه % % PageV01P1558 11(@)(@@) % والساقي باقي يسقيني % % بكأسه الصافي % % 12(@)(@@) % ونلت ما أتمنى % % والغير في التيه % % 13(@)(@@) % والراقي واقي يحميني % % عن السوى كافي % % 14(@)(@@) % ومن يشاهد تهنى % % من غير تمويه % % 15(@)(@@) % أشواقي لاقى تغنيني % % عن كل أوصافي % % 16(@)(@@) % في النور كان مغيبي % % والكون أسباب % % 17(@)(@@) % والحسنى أسنى لي أحرق % % وجه له داني % % 18(@)(@@) % دور % % 19(@)(@@) % صلي إله البرايا % % ربي على المختار % % 20(@)(@@) % ذي المجد يجدي بالإحسان % % للبائس الراجي % % PageV01P1559 21(@)(@@) % طه شريف المزايا % % من جاء بالأسرار % % 22(@)(@@) % للرفد يفدي مما كان % % فكلهم ناجي % % 23(@)(@@) % عبد الغني بالعطايا % % مشعشع الأنوار % % 24(@)(@@) % لي وجدي يجدي بالألحان % % في الغيهب الساجي % % 25(@)(@@) % ما جدول بالصبيب % % في الروض ينساب % % 26(@)(@@) % أواهنا وهنا مذ أطرق % % ريان الأغصان % % PageV01P1560 البحر : - 1(@)(@@) % إليك من البعد قلبي دنا % % 2(@)(@@) % ومنك لقد نلت كل المنى % % 3(@)(@@) % فيا من لنا قال إني أنا % % 4(@)(@@) % أتيناك بالفقر يا ذا الغنى % % وأنت الذي لم تزل محسنا % % 5(@)(@@) % وعند الصباح وعند المسا % % 6(@)(@@) % نهيم اشتياقا بفرط الأسى % % 7(@)(@@) % عهدناك برابنا مؤنسا % % 8(@)(@@) % وعودتنا كل فضل عسى % % يعود الذي منك عودتنا % % 9(@)(@@) % سراة الهوى بالهوى 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms312# ولهوا % % 10(@)(@@) % وفيك عن الغير قد توهموا % % PageV01P1561 11(@)(@@) % إليك كفوف الدعا وجهوا % % 12(@)(@@) % مساكينك الشعث قد موهوا % % بحبك إذ هو أقصى المنى % % 13(@)(@@) % لقد جاء من فرعنا أصلكم % % 14(@)(@@) % ونحن الذي عمنا فضلكم % % 15(@)(@@) % وهيهات أنا نكافي لكم % % 16(@)(@@) % فما في الغنى واحد مثلكم % % وفي الفقر لا عصبة مثلنا % % 17(@)(@@) % فنينا بمن لم يزل سرمدا % % 18(@)(@@) % ومنه به قد سمعنا الندا % % 19(@)(@@) % ويا من خفى عن عيون العدى % % 20(@)(@@) % رأيناك في كل أمر بدا % % وليس من الأمر شيء لنا % % PageV01P1562 21(@)(@@) % طمسنا بأنواركم والسنا % % 22(@)(@@) % وآل الورى عندنا للفنا % % 23(@)(@@) % وقد ارص لي حبكم ديدنا % % 24(@)(@@) % سترت اسمكم غيرة ها أنا % % أموه بالشعب والمنحنى % % 25(@)(@@) % جرت خوف هذا الجفا أدمعي % % 26(@)(@@) % وشوقي به التهبت أضلعي % % 27(@)(@@) % وأنت الذي لا سواه أعي % % 28(@)(@@) % إذا كنت في كل حال معي % % فعن حمل زادي أنا في غنى % % 29(@)(@@) % على سيرنا لم يزل سيركم % % 30(@)(@@) % وفي روض قلبي شدا طيركم % % PageV01P1563 31(@)(@@) % وخير جميع الورى خيركم % % 32(@)(@@) % فأنتم هم الحق لا غيركم % % فيا ليت شعري أنا من أنا % % PageV01P1564 البحر : - 1(@)(@@) % نحن الجفون نحفظ العيونا % % ونحن أهل الذكر فاسألونا % % 2(@)(@@) % ونحن ذات من بدت صفاته % % تكشف عن صبغتنا فنونا % % 3(@)(@@) % جنوننا في حبكم عقلا يرى % % وعقلنا في ديننا جنونا % % 4(@)(@@) % وجودنا الحق ونحن باطل % % نذوق في حياته المنونا % % 5(@)(@@) % وهو الذي له الصفات كلها % % والغافلون عنه يدعونا % % 6(@)(@@) % الله وحده هو الموجود لا % % سواه والجميع معدومونا % % 7(@)(@@) % لأنهم هم التقادير التي % % قدرها لنا بأن تكونا % % 8(@)(@@) % ويظهر الوجود منه في الذي % % يظهر عنه واضحا مكنونا % % 9(@)(@@) % والنور نور الذات في ظلامنا % % ولم نزل نحن له الشئونا % % 10(@)(@@) % نلوح كالبرق له ونختفي % % فنعرف الظهور والبطونا % % PageV01P1565 11(@)(@@) % ونحن في كلامه حروفه % % نحمل معناه لنا المصونا % % 12(@)(@@) % وأمره الواحد ينجلي لنا % % فيرسم الكاف بنا والنونا % % 13(@)(@@) % كاف كفاية ونون نعمة % % روحا وجسما سلسا موزونا % % 14(@)(@@) % وفعله نحن على مرداه % % فنقتضي التحريك والسكونا % % 15(@)(@@) % عز وجل عن مشابه له % % قد أعجز الأفكار والظنونا % % 16(@)(@@) % وهو الغني والورى جميعهم % % يرجون غيث فضله الهتونا % % 17(@)(@@) % أضل في آدم عن طلعته % % عدوة إبليسا الملعونا % % 18(@)(@@) % وقد هدى فيه إليه أمة % % بأمره قد جاء يعملونا % % 19(@)(@@) % تبارك الله الذي بوجهه % % في كل شيء هيج الشجونا % % 20(@)(@@) % وأتعب العاشق 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms313# المسبى به % % وحير المتيم المفتونا % % PageV01P1566 21(@)(@@) % وإن يشأ بالبعد يحرق الذي % % أراد غيرا أو أحب دونا % % 22(@)(@@) % وإن يشأ يكشف عن الوجه لمن % % يحبه ويخرج المسجونا % % 23(@)(@@) % مطروده بغيره مفتتن % % ولم يزل مقبوله المحصونا % % 24(@)(@@) % وحكمه ليس له من علة % % فإن بدا لا تمنع الماعونا % % 25(@)(@@) % وكن به له خفيا ظاهرا % % ولا تكن بجهله مغبونا % % PageV01P1567 البحر : - 1(@)(@@) % أيها الشحص الذي قال أنا % % مسلم والكفر فيه اكتمنا % % 2(@)(@@) % ليس هذا الأمر بالقول ولا % % بالتمني يدرك المرء المنى % % 3(@)(@@) % إن تكن آمنت بالله كما % % هو في التنزيه عما ههنا % % 4(@)(@@) % حيث لا تشبيه في العقل له % % ثم لا تعطيل سرا علنا % % 5(@)(@@) % ثم صدقت النبي المصطفى والذي أظهره من شرعه هكذا كنت به مستقنا % % بالذي جاء به يرشدنا % % 6(@)(@@) % والذي أظهره من شرعه % % هكذا كنت به مستيقنا % % 7(@)(@@) % أو بدا من ذاك شيء لك في % % أحد عنك تناءى أو دنا % % 8(@)(@@) % فإذا أنت لعمري مسلم % % تتبع الفرض وتقفوا ألسننا % % 9(@)(@@) % فاستعن بالله إن لم تك في % % هذه الحالة تلق المننا % % 10(@)(@@) % وإذا أتحفك الله بها % % فأشكر الله لها وادع لنا % % PageV01P1568 البحر : - 1(@)(@@) % يا كثير الشوق والشجن % % دائما في السر والعلن % % 2(@)(@@) % راح يشكو هجر ممتنع % % فهو عن وصف الجميع غنى % % 3(@)(@@) % ماله إن رمته جهة % % فانتبه من غفلة الوسن % % 4(@)(@@) % ماله في ديننا أبدا % % من مكان لا ولا زمن % % 5(@)(@@) % وكان قبل الكون هو على % % ما عليه كان فاستبن % % 6(@)(@@) % أن رمت تحظى برؤيته % % طبق ما قد جاء في السنن % % 7(@)(@@) % ألق منك النفس وهو بأن % % تعرف المودع في البدن % % 8(@)(@@) % واستمع واصغ لذاك ولا % % تشتغل عنه بلوم ذلي % % 9(@)(@@) % كل من الكون عنه إذا % % لم تجدهم فيه في فتن % % PageV01P1569 البحر : - 1(@)(@@) % أنت الذي طول عمري الهم تكفيني % % وعند موتي وتغسيلي وتكفيني % % 2(@)(@@) % أنت العليم بحالي والبصير به % % يا مالك الملك يا رب السلاطين % % 3(@)(@@) % وليس لي من سلاح فيك أحمله % % بل أنت حسبي عن حما السكاكين % % 4(@)(@@) % أنت القوي على ضعفي تدبرني % % في كل أمر وعما شئت تغنيني % % 5(@)(@@) % خلقتني من تراب واقتدرت فلا % % مساعد لك في خلقي وتكويني % % 6(@)(@@) % وأنت سويتني من نطفة رجلا % % وفي منك بنفخ الروح تحييني % % 7(@)(@@) % كم 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms314# نعمة لك عندي لست أحصرها % % فيما سيأتي وفي الماضي وفي الحين % % 8(@)(@@) % وأرتجي منك توفيقي لشكرك يا % % شكور إنك ما أرجوه تعطيني % % 9(@)(@@) % وأعظم الكل إرشادي لدين هدى % % طريقة الحق نور الشرع والدين % % 10(@)(@@) % كان النبي نبيا في الغيوب به % % وآدم بين الماء والطين % % PageV01P1570 11(@)(@@) % وإنني بك ربي واثق كرما % % بالحفظ من كل ما عن ذاك يلويني % % 12(@)(@@) % آمنت بالوعد حقا والوعيد على % % طبق النصوص التي جاءت بتعيين % % 13(@)(@@) % وأنت أكرم من يوفى بموعده % % من غير خلف ولا مطل ولا مين % % 14(@)(@@) % ونرتجي كلنا خلف الوعيد فما % % خلف الوعيد بعيب منك أو شين % % 15(@)(@@) % لأنه كرم وهو الدليل على % % عناية الله بالخلق المساكين % % 16(@)(@@) % يا من له الحجة العظمى التي بلغت % % أقصى الكمال وأزرت بالبراهين % % 17(@)(@@) % على جميع الورى إن شاء عذبهم % % عدلا وخلدهم في نار سجين % % 18(@)(@@) % وإن يشأ بجنان الخلد نعمهم % % فضلا وعاملهم باللطف واللين % % 19(@)(@@) % إني أريدك لا أني أريد سوى % % وما السوى غير تلبيس وتزيين % % 20(@)(@@) % وأنت أنت هو الحق المبين بلا % % شك وغيرك وسواس الشياطين % % PageV01P1571 21(@)(@@) % يا خالق الخلق بالسر العظيم ويا % % من أمره بين تحريك وتسكين % % 22(@)(@@) % إني توسلت في الدنيا إليك بمن % % جعلته سببا في كل تدوين % % 23(@)(@@) % ومن هو النور من فياض نورك قد % % خلقت كل الورى منه بتكوين % % 24(@)(@@) % طه النبي الذي أرسلته كرما % % فينا لكشف وإيضاح وتبيين % % 25(@)(@@) % محمد المصطفى المختار من مضر % % وآله الغر هاتيك الأساطين % % 26(@)(@@) % أن تشرح صدرك من ضيق ومن حرج % % وتفرج الهم من صعب بتهوين % % 27(@)(@@) % ولا تدعني أمد الكف في طلب % % ممن سواك على ظن وتخمين % % 28(@)(@@) % واحفظ عقيدة قلبي من تقلبه % % حتى ألاقيك في صدق وتمكين % % 29(@)(@@) % وجد بعفوك عن عبد الغني وكن % % عونا له يوم تعديل الموازين % % 30(@)(@@) % وألطف به وبآباءه له سلفوا % % وكل إخوانه أرباب تحصين % % PageV01P1572 31(@)(@@) % والمسلمين جميعا ما شدت سحرا % % ورق الحمام بأنواع التلاحين % % PageV01P1573 البحر : - 1(@)(@@) % الظاهر أفناني % % والباطن أبقاني % % 2(@)(@@) % والعاذل يلحاني % % في الكاس وفي الحان % % 3(@)(@@) % دور % % 4(@)(@@) % يا صاحب أشواقي % % ها أنت هو الباقي % % 5(@)(@@) % والحق هو الساقي % % من خمرة إنسان % % 6(@)(@@) % دور % % 7(@)(@@) % عرج بربا نجد % % يا مكثر ذا الوجد % % 8(@)(@@) % فالقرب لنا يجدي % % من ساكن نعمان 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms315# % % 9(@)(@@) % دور % % 10(@)(@@) % الحي لنا بانا % % والمركب أعيانا % % PageV01P1574 11(@)(@@) % فارفق بمطايانا % % يا سائق أظعان % % 12(@)(@@) % دور % % 13(@)(@@) % هذه العلم الفرد % % والشوق بنا يحدو % % 14(@)(@@) % والقرب هو القصد % % في عالم روحاني % % 15(@)(@@) % دور % % 16(@)(@@) % مولاي على الهادي % % من طاب به الورى % % 17(@)(@@) % واشتاق له الحادي % % فارتاح بألحان % % 18(@)(@@) % دور % % 19(@)(@@) % أنواع تحياتي % % من عبد غنى تاتي % % 20(@)(@@) % في سائر أوقاتي % % بالخير وإحسان % % PageV01P1575 البحر : - 1(@)(@@) % نحن قوم متنا وفنينا % % بتجلي وجوده الحق فينا % % 2(@)(@@) % وحشرنا إليه عمن سواه % % ودخلنا جناته خالدينا % % 3(@)(@@) % قمر لا نضام فيه اجتلاء % % بينته ذواتنا تبينا % % 4(@)(@@) % وإذا أظلم الكيان عليه % % أطلعته الغيوب حينا فحينا % % 5(@)(@@) % يا أخلاى هذه نفحات % % من رياض بها إليه أتينا % % 6(@)(@@) % فلتشموا الأقاح والورد منها % % والخزامى والآس والياسمينا % % 7(@)(@@) % حضرات بها الوجود تجلى % % زينته لمن يرى تزيينا % % 8(@)(@@) % قد حمدنا السرى بهن إليها % % حيث منها جئنا المقام الأمينا % % 9(@)(@@) % وهي أم الكتاب سبع المثاني % % نزلت مرتين عقلا ودينا % % 10(@)(@@) % فرقينا صفاتها درجاتوتلونا آياتها وقرأنا هن حم والكتاب المبينا % % وشربنا تسنيمها الصرف عيناسقط بيت ص % % PageV01P1576 11(@)(@@) % وبدت عندنا معاني معان % % لمعان بذاتها تبتدينا % % 12(@)(@@) % علمنا والكتاب والوصف منها % % وهي ذات وراء ذا لن تبينا % % 13(@)(@@) % كيف في الكل لن تبين وبانت % % وهي نور لما يزل مستبينا % % 14(@)(@@) % واعتباراتها لثلاث ظلام % % زائل عندها عيانا يقينا % % 15(@)(@@) % ثلثوها حقيقة لا اعتبارا % % ثم ضلوا ونحن فيها هدينا % % 16(@)(@@) % فأعرف الكل هكذا وتحقق % % تعرف الحق والكفور اللعينا % % PageV01P1577 البحر : - 1(@)(@@) % خذها إليك لها هدى وبيان % % منا نصيحة من له عرفان % % 2(@)(@@) % مغرى بحب المذعنين يسوقهم % % للغيب منه تحقق وعيان % % 3(@)(@@) % وبها يد التوحيد قد مدت لمن % % حفظ العهود وعند الإذعان % % 4(@)(@@) % إني بحبك يا محمد مغرم % % أنت البديري بالكمال مصان % % 5(@)(@@) % وعليك من نسج الهداية حلة % % وطرازها التوفيق والايقان % % 6(@)(@@) % فأبشر كلب سعاد وعناية % % وحماية ومن الإله تصان % % 7(@)(@@) % أنت الحقيق بأن يقال له انتبه % % من رقدة الغفلات با إنسان % % 8(@)(@@) % أعني بذلك رقدة الدين التي % % من كان راقدها هو اليقظان % % 9(@)(@@) % عند العوام وعند من هو غافل % % والذكر منه بها هو النسيان % % 10(@)(@@) % علم اليقين فإن ذلك بعده % % عين اليقين به الأحبة دانوا % % PageV01P1578 11(@)(@@) % من بعده حق ولليقي % % ن حقيقة لظهورها لمعان % % 12(@)(@@) % هي وحدة باسم الوجود تحققت 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms316# % % وهي الوجود الحق والوجدان % % 13(@)(@@) % تنحل فيها المشكلات جميعها % % والسنة الغراء والقرءآن % % 14(@)(@@) % وكلام أهل الله في طبقاتهم % % وبها يكون من الشكوك أمان % % 15(@)(@@) % إنا لوجود لمن تحقق واحد % % ليس الزيادة فيه والنقصان % % 16(@)(@@) % ذات منزهة عن التركيب لا % % شيء يشابهما له الحدثان % % 17(@)(@@) % وصفاتها في نفسها هي عينها % % وكذاك أسماء لتلك حسان % % 18(@)(@@) % والعقل يدرك أن ذلك غيرها % % وهي المراتب ما لها نكران % % 19(@)(@@) % لا عينها لا غيرها فافطن هنا % % ليزول عنك الظن والحسبان % % 20(@)(@@) % وهي اعتبارات كثيرات وما % % هي غير ذات الحق جل الشان % % PageV01P1579 21(@)(@@) % والحس والمحسوس قد قاما بها % % والعقل والمعقول ياإخوان % % 22(@)(@@) % والكل خلق الله أي تصويرهفانظر إلى هذا الوجود مجردا عنه تقاديرا هي الأكوان % مثل المعاني تدرك الأذهانسقط بيت ص % % 23(@)(@@) % ومنزها لجماله عن كل ما % % يحوي المكان وتجمع الأزمان % % 24(@)(@@) % فالكل موجودون منه به له % % لولاء كان وجودهم ما كانوا % % 25(@)(@@) % والكل معدومون فيه وإنما % % هو وحده المتفضل المنان % % 26(@)(@@) % وهو الذي هو عين ما هو لم يزل % % ما غيرته بخلقها الأعيان % % 27(@)(@@) % وكذاك لم تتغير الأعيان من % % عدم بها لكن لها لو ذان % % 28(@)(@@) % تبدو به وهو الذي يبدو بهاوهما جميعا ظاهران فتارة خلق يقال وتارة رحمن % كل لكل نسبة وقرانسقط بيت ص % % 29(@)(@@) % حق على العرش العظيم قد استوى % % وبه محل قائم ومكان % % 30(@)(@@) % سبحانه من أن يحل بغيره % % أو في مكان أوله إمكان % % PageV01P1580 31(@)(@@) % هو أول هو أخر هو ظاهر % % هو باطن هو واحد ديان % % 32(@)(@@) % والكائنات جميعها معدومة % % في نوره ولها به ابطان % % 33(@)(@@) % وهو الموجود الحق جل جلاله % % والإنس قد قاموا به والجان % % 34(@)(@@) % في الملك والملكوت عزوجل عن % % معنى الشريك وما هي الأوثان % % 35(@)(@@) % فالجأ إليه وكن به متمسكا % وليستو الإسرار والإعلان % % 36(@)(@@) % واطرح قيودك في حماه ولذ به % % وليكثر التفويض والتكلان % % 37(@)(@@) % وبه فقم واقعد به واركع به % % واسجد إليه به لك استيقان % % 38(@)(@@) % واترك مرادك في قديم مرادهواترك به دعوى الوجود له وكن فيه بلا كون يزول الران % يمضي الفساد ويذهب الطغيانسقط بيت ص % % 39(@)(@@) % واجعل فناءك في هواه هو البقا % % إن الفنا هو للبقا ميدان % % 40(@)(@@) % واعكف على سنن النبي محاذرا % بدع الزمان 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms317# يسوقها الشيطان % % PageV01P1581 41(@)(@@) % فالسنة الغراء منهاج التقى % % تمحى به الآثام والعصيان % % 42(@)(@@) % واكفف عن الناس الظنون وسوءها % % واحذر ففي هذا لك الحرمان % % 43(@)(@@) % واترك على العاصين ستر الهمم % % وأعلم بأنك كيف دنت تدان % % 44(@)(@@) % واكتم سريرتك التي هي قد صفت % % لك عن سواك يزينك الكتمان % % 45(@)(@@) % وأقم على نصحي وكن متحققا % % بمقالتي فقالتي الفرقان % % 46(@)(@@) % وأدر لسانك بالصلاة على الذي % % غيث الهدى أبدا به هتان % % 47(@)(@@) % ولآله ولصحبه من بعده % % فليكثر التسليم والرضوان % % 48(@)(@@) % وانهض بحب الصالحين وذكرهم % % فيما تروم فتذهب الأحزان % % 49(@)(@@) % ولك الحوائج تنقضي بسهولة % % وإليك يأتي الغفور والغفران % % 50(@)(@@) % وبما أتي عبد الغني فخذ ولا % % تتبع عداه فإنهم عميان % % PageV01P1582 البحر : - 1(@)(@@) % لا كنت إذ كنا أدري كيف كنت ولو % % لا كنت إذ كنت أدري كيف لم أكن % % 2(@)(@@) % إن كنت من قبل أني كنت لامعه % % فلا تكن معه بل كن به تكن % % PageV01P1583 البحر : - 1(@)(@@) % ظهر الحق للعيان وبينا % % نحن فيه إذ صار بعدا وبينا % % 2(@)(@@) % نقطة الانفصال من كل نفس % % تجعل العين في الشهادة غينا % % 3(@)(@@) % رتب تنقضي وأخرى توافي % % باعتبار منه لهن يقينا % % 4(@)(@@) % كل هذا نراه إذ نحن خلق % % وهو شيء منا لنا لاح فينا % % 5(@)(@@) % والعظيم العظيم جل تعالى % % أين من يعرف الحقيقة أينا % % 6(@)(@@) % لكن الأمر هكذا هو ستر % % وتجل مبين تبينا % % 7(@)(@@) % ويدى هذه يدي وهي أيضا % يده لي بها يكون معينا % % 8(@)(@@) % وجميعي هذا وروحي وجسمي % % فهو لي يفيض دنيا ودينا % % 9(@)(@@) % والتصاوير والتماثيل منه % % لمحات تلونت تلوينا % % 10(@)(@@) % وله الخلق مثل ما قال والأم % % ر على ما قدر ما يريد يرينا % % PageV01P1584 11(@)(@@) % فنراه به كذلك طورا % ويرانا طورا بنا مستبينا % % 12(@)(@@) % بصر واحد وسمع وعلم % % تبتدي حينا ويسترحينا % % 13(@)(@@) % والذي قال عنه الذكر أني % % قال عنا في الذكر أن الذينا % % PageV01P1585 البحر : - 1(@)(@@) % في الكلب عشر خصال كلها حمدت % % يا ليتها كلها أو بعضها فينا % % 2(@)(@@) % جوع له لم يزل والصالحون كذا % % وما له موضع يختص تعيينا % % 3(@)(@@) % كمن على ربه لا زال متكلا % % ولا ينام سوى من ليله حينا % % 4(@)(@@) % مثل المحبين لا ميراث قط له % % إن مات كالزاهدين المستقلنا % % 5(@)(@@) % وليس يهجر يوما من يصاحبه % % وإن جفاه كأخلاق المريدينا 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms318# % % 6(@)(@@) % وراضيا بيسير من معيشته % % ما زال كالقانع المستكمل الدينا % % 7(@)(@@) % وإن يكن غالبا شخص سواه على % % مكانه ينصرف عن ذاك تهوينا % % 8(@)(@@) % بتركه مثل أصحاب التواضع قل % % وإن بضرب وطرد من فتى هينا % % 9(@)(@@) % ثم الفتى قد دعاه بعد ذاك أتى % % كحال أهل خشوع خذه تبيينا % % 10(@)(@@) % وإن رأى الأكل أضحى واقفا تره % % يرنو إليك كأخلاق المساكينا % % PageV01P1586 11(@)(@@) % وإن رحلت لا شيء ترى معه % % مثل الذي حاز في التجريد تمكينا % % PageV01P1587 البحر : - 1(@)(@@) % هوى عين العيون % % يسوق إلى المنون % % 2(@)(@@) % وللوجه المصون % % ظهور في بطون % % 3(@)(@@) % بدا شهدتف دوني % % تناويع الفنون % % 4(@)(@@) % وقد ثارت شجوني % % 5(@)(@@) % دور % % 6(@)(@@) % سقى لواديا وحيا % % رباه الودق ريا % % 7(@)(@@) % فكم دارت عليا % % به كاس الحميا % % 8(@)(@@) % وصرت به مهيا % % طويت الكون طيا % % 9(@)(@@) % فمن كاف النون % % 10(@)(@@) % دور % % PageV01P1588 11(@)(@@) % وصلى الله ربي % % على الداعي الملبي % % 12(@)(@@) % على محبوب قلبي % % على طه وحبي % % 13(@)(@@) % به في نيل قربي % % وأل ثم صحب % % 14(@)(@@) % بهم فتح الحصون % % 15(@)(@@) % دور % % 16(@)(@@) % أئمة كل حي % ذوي القدر السني % 17(@)(@@) % لهم عبد الغني % بتسليم يحيى % % 18(@)(@@) % من الله العلي % % على أمد العشي % 19(@)(@@) % وتقليب الشئون % % PageV01P1589 البحر : - 1(@)(@@) % قلبي إلى وجه سلمى مغرم عانى % % 2(@)(@@) % وحبها معدم آثار أعياني % % 3(@)(@@) % فيا رفيقي حديث الغير أعياني % % 4(@)(@@) % روح فؤادي بذكر النازح الداني % % فذكره لم يزل روحي وريحاني % % 5(@)(@@) % من لي بمن هو باد في غلالته % % 6(@)(@@) % كالبدر يشرق من صافي غمامته % % 7(@)(@@) % فغن لي باسمه وافصح بآيته % % 8(@)(@@) % واصرف همومي بصرف من مدامته % % فدنها من جناب العز أدناني % % 9(@)(@@) % يالله يا بارق الأسرار قف نفسا % % 10(@)(@@) % فالكون نور ومن يلهو يرى غلسا % % PageV01P1590 11(@)(@@) % إني أردت الهدي خذ منه لي قبسا % % 12(@)(@@) % واحطط رحالي بباب الدير ملتمسا % % راحا فقيوم ذاك الدير لي داني % % 13(@)(@@) % شمس المعاني بأفلاك العلى بهرت % % 14(@)(@@) % وقصة العشق في أهل الهوى اشتهرت % % 15(@)(@@) % والحسن أحكامه بين الورى قهرت % % 16(@)(@@) % ولي بهيكله محجوبة ظهرت % % من بعدما خفيت عني بجسماني % % 17(@)(@@) % شعر الشعور يحاكي حية لسعت % % 18(@)(@@) % فلو دعا كل نفس نحوه لسعت % % 19(@)(@@) % لكن حقيقتنا هذا الذي صنعت % % 20(@)(@@) % منيعة الوصل إلا عن فتى منعت % % في الحب أن يصبوا إلي ثاني % % PageV01P1591 21(@)(@@) % عن العلو علت من فرط عزتها % % 22(@)(@@) % والكون قد غاب في أنوار طلعتها % % 23(@)(@@) % حقيقة أنا 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms319# فان في محبتها % % 24(@)(@@) % نادمتها فمحتني عند رؤيتها % % وكان محوى بها أصلا لوجداني % % 25(@)(@@) % ما غافل عن تجليها كمنتبه % % 26(@)(@@) % والقلب راق بها يا صفو مشربه % % 27(@)(@@) % وقد أزالت لدينا كل مشتبه % % 28(@)(@@) % ولو شرحت الذي منها خصصت به % % يوما لاصبح من في الكون يهواني % % 29(@)(@@) % على التقادير بالايجاد منعمة % % 30(@)(@@) % لما تجلت وفي وجه الرضى سمة % % PageV01P1592 31(@)(@@) % من الأعاريب أمر العشق معجمة % % 32(@)(@@) % اشتاقها وهي في سرى مخيمة % % ونورها ظاهر ما بين أجفاني % % 33(@)(@@) % ركبت للشوق في بيدائها نجبا % % 34(@)(@@) % والكون يخفق منها قلبه وجبا % % 35(@)(@@) % يا لائمي في الهوى لومي غدا عجبا % % 36(@)(@@) % وكيف يصبح عنها الطرف محتجبا % % وحسنها في جميع الخلق يلقاني % % 37(@)(@@) % مطول الوجد مني ذاك مختصر % % 38(@)(@@) % والعشق أجمعه في القلب منحصر % % 39(@)(@@) % يا قوم إني على الأغيار منتصر % % 40(@)(@@) % إن غيبت ذاتها عني فلي بصر % % يرى محاسنها في كل إنسان % % PageV01P1593 41(@)(@@) % عني محت سائر الأوهام والشبه % % 42(@)(@@) % لما تجلت بأمر غير مشتيه % % 43(@)(@@) % وأنني لم أزل فيها بمنتبه % % 44(@)(@@) % ما في محبتها ضد أضيق به % % هي المدام وكل الخق ندماني % % PageV01P1594 البحر : - 1(@)(@@) % من مات يعلم أنك الحق المبين % % وأنا الذي قدمت فيك على اليقين % % 2(@)(@@) % وفنيت حتى في وجودك بان لي % % كيف التمسك منك بالحبل المتين % % 3(@)(@@) % يا نور نور الكائنات جميعها % % نور على نور هو النور المبين % % 4(@)(@@) % أنا ظلمة ظهرت بنور محمد % % ومحمد نور بنورك مستبين % % 5(@)(@@) % والنور بالظلمات يظهر عادة % % وكذلك الظلمات من نور تبين % % 6(@)(@@) % نحن التقادير التي قدرتها % % في نور نورك يا مهيمن يا معين % % 7(@)(@@) % فألطف بنا وامنن علينا بالذي % % نرجوه منك ولا تدعنا حائرين % % 8(@)(@@) % وتول حفظ قلوبنا وجسومنا % % مما يعيب من الأمور وما يشين % % 9(@)(@@) % وأعن وثبتنا على سنن الهدى % % دنيا وآخرة كما ترضى ودين % % 10(@)(@@) % بحبيبك الهادي إليك محمد % % خير الورى وأجلهم طه الأمين % % PageV01P1595 11(@)(@@) % وبآله وبصحبه وبحز به % % وبمن غدوا أنصاره والتابعين % % 12(@)(@@) % أبدا عليه كذا عليهم كلهم % % أزكى الصلاة مع السلام بكل حين % % 13(@)(@@) % ما لاح وجه الفجر في شعر الدجى % % والشمس مشطت السواد عن الجبين % % PageV01P1596 البحر : - 1(@)(@@) % أواه من سار فيكم % % بروح أمر أمين % % 2(@)(@@) % لا طبع جسم شمال % % وجهل نفس يمين % % 3(@)(@@) % يرجع لكم منه روح % % يا نور 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms320# قلبي وعيني % % 4(@)(@@) % يرجع بجسم ونفس % % يرجع بخفي حنين % % PageV01P1597 البحر : - 1(@)(@@) % قلبي الذي في هوى المحبوب لاقى البين % % وليس للمرء إلا قلب لا قلبين % % 2(@)(@@) % والقلب في الدهر يقلب قلب لا قلبين % % لاق اللقابي وبالأغيار لاق النبين % % PageV01P1598 البحر : - 1(@)(@@) % ما لابن مريم في تلك الأساطين % % من قومه غير تبليغ وتبيين % % 2(@)(@@) % كانت حقيقته الروح التي غلبت % % على الهواء به والنار والطين % % 3(@)(@@) % روح مقدسة من أمر خانقها % % منفوخة فيه عن توجيه جبرين % % 4(@)(@@) % وجاء يدعو بني يعقوب منه إلى % % مثل الذي هو فيه من تحاسين % % 5(@)(@@) % لأنهم كلهم أولاد آدم من % % جسم ورح وتغليظ وتليين % % 6(@)(@@) % فقام يشرح فيهم أمر نشأته % % من التجلي بأنواع التلاوين % % 7(@)(@@) % وقال إني وإني حسبما نقلوا % % عنه على مقتضى ادراك تكوين % % 8(@)(@@) % وقصده أن يروا أحوال أنفسهم % % كما رأى نفسه عيسى بتهوين % % 9(@)(@@) % فيعرفوا ربهم ذات الوجود على % % ذواتهم قد تجلت في الأحايين % % 10(@)(@@) % فيعبدوه كعيسى في عبادته % % من غير نقص وجور في الموازين % % PageV01P1599 11(@)(@@) % وكان مشرب عيسى في معارفه % % للخائفين يسمى بالرهابين % % 12(@)(@@) % والكاشفون لشمس الروح طالعة % % هم الشماميس أمثال العراجين % % 13(@)(@@) % والقس صاحب شان في تحققه % % وغير ذلك مما في الدواوين % % 14(@)(@@) % بمقتضى لغة الانجيل واصطلحت % % عليه تلك الحواريون في الحين % % 15(@)(@@) % كما أتى عابد في شرعنا وأتى % % مقرب وولى أهل تمكين % % 16(@)(@@) % وهكذا هي ألقاب محققة % % للعيسويين من تلك الأساطين % % 17(@)(@@) % حتى لقد نسخت تلك الأمور وقد % % سرى بها الكفر في طرق الشياطين % % 18(@)(@@) % وما بقي الآن غير الاسم وارتفعت % % حقائق الوصف عن قوم ملاعين % % 19(@)(@@) % فراهب كافر والقس يشبهه % % في زيغه عن صراط الحق والدين % % 20(@)(@@) % والأمر في نفسه حق وقد ورثت % % مقام عيسى به أصحاب ياسين % % PageV01P1600 21(@)(@@) % من هذه الأمة الغرا جهابذة % % في صولة الحال أمثال السلاطين % % 22(@)(@@) % فاستعملوا كل اسم في حقيقته % % بالكشف والصدق لا عن حكم تخمين % % 23(@)(@@) % وما تحاشوا الآن الأولياء لهم % % حكم الوراثة عن حق وتعيين % % 24(@)(@@) % وإنه مقتضى علم الحقائق لا % % علم الرسوم لنفع لا لتزيين % % 25(@)(@@) % فحققوا ما كشفنا عنه واعتبروا % % يا عصبة الحق يكفيكم ويكفيني % % PageV01P1601 البحر : - 1(@)(@@) % كلامكم يا عواذل كله مينا % % معناه فضة زغل ما تقبلو مينا % % 2(@)(@@) % كيف العمل لم تجد 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms321# إن صحتمومينا % % مراكب العشق في بحر الهوى مينا % % PageV01P1602 البحر : - 1(@)(@@) % في منزل القرب لما نحن حلينا % % كل التعاقيد بالتحقيق حلينا % % 2(@)(@@) % وحين مر الجفا بالصبر حلينا % % أعناقنا بعقود الوصل حلينا % % PageV01P1603 البحر : - 1(@)(@@) % لم يبق مخلوق تخصيصا وتعيينا % % الأبلى بالبلاد دنياه أو دينا % % 2(@)(@@) % بل كل معنى لقد ذاق البلاحينا % % حتى البلا بالملا منا بلى فينا % % PageV01P1604 البحر : - 1(@)(@@) % بدت شمس الضحى تجلى % % على قلب بها عانى % % 2(@)(@@) % فما أهنى وما أحلى % % مليحا ما له ثاني % % 3(@)(@@) % يا أخلائيدؤاكم دائي % % في الرشا النائيإنني رائي % % 4(@)(@@) % أصل بلوائينقطة الباء % % حيث في مائيرمز ايمائي % % 5(@)(@@) % لاحت الأنواربانت الأسرار % % زادت الأطوارغنت الأطيار % % 6(@)(@@) % فأنطفى يا نار % % قد دنا الداني % % 7(@)(@@) % أيها الغافلبدرك الأفل % % ليت لو تدريبالهوى العذري % % 8(@)(@@) % إنما بدريلاح في صدري % % فاختفى أمريبين اخواني % % 9(@)(@@) % دور % % 10(@)(@@) % جميل الوجه قد وافر % % فأفنى سائر الأكوان % % PageV01P1605 11(@)(@@) % ومن بعد الجفا صافي % % وزان الحسن بالاحسان % % 12(@)(@@) % نوره ماحيخط ألواحي % % فارتشف راحيمنه يا صاح % % 13(@)(@@) % لا تكن صاحيواترك اللاحي % % بين أشباحدون أرواح % % 14(@)(@@) % ثم صلى اللهعلى النبي الأواه % % العظيم الجاهمن به قدفاه % % 15(@)(@@) % عبد من أغناه % % مغرم عانى % % 16(@)(@@) % مع جميع الآل % % سادة الافضال % % 17(@)(@@) % والصحاب الغرمن جفاهم غر % % هم لدفع الضركالدواء المر % % 18(@)(@@) % وعقود الدر % % ذاك حلاني % % PageV01P1606 البحر : - 1(@)(@@) % ما لي لقد أصبحت من نيل المنى % % لا أنت أنت أرى ولا أنى أنا % % 2(@)(@@) % وأرى البلاد ولا بلاد وأهلها % % لا أهلها وأرى الدناهي لا الدنا % % 3(@)(@@) % وجميع ما قد كان زال ولم يزل % % والكل وهما صار لي كي يفتنا % % 4(@)(@@) % وبدا الذي قد كان عنى خافيا % متصورا بالكل بها يكون متعينا % % 5(@)(@@) % من غير ما صور تغيره ولا % % هو بالظهور بها يكون مكونا % % 6(@)(@@) % ما قيدته عن مدى إطلاقه % % اذ لا وجود لها سواه مبينا % % 7(@)(@@) % وهي الكثيرة وهو فيها واحد % % فرد وأن صبغته لي فتلونا % % 8(@)(@@) % لم يشتغل عن بعضها بالبعض بل % % في كل شيء لم يزل متمكنا % % 9(@)(@@) % وشئونه هي وهي فانية به % % وهو الذي هو ليس يدركه الفنا % % 10(@)(@@) % حق ونحن وما نشاهد باطل % % فتن العقول بخلقه والأعينا % % PageV01P1607 11(@)(@@) % فأحذر تظن بأن شيئا غيره % % معه يكون هناك في الغد أوهنا % % PageV01P1608 البحر : - 1(@)(@@) % إن الفناء طهارة الإنسان % % لصلاة معرفة 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms322# البعيد الداني % % 2(@)(@@) % فصلاة معرفة الإله بغير ما % % طهر الفناء عديمة الأركان % % 3(@)(@@) % والكفر فيها ظاهر بكلامه % % وبفعله وإزالة الإيمان % % 4(@)(@@) % إن الفناء طهارة مفروضة % % لصلاة معرفة على الإنسان % % 5(@)(@@) % وهي الفناء المحض بالتطهير عن % % خبث الجسوم كثائف الحيوان % % 6(@)(@@) % وعن النفوس لطائف الكون التي % % حدثت فقل حدث من الحدثان % % 7(@)(@@) % وطهارة الأخباث والأحداث لاوالماء ماء الغيب ينزل من سما غيب الأله على فؤاد عاني % % تجزي بغير الماء ذي السيلانسقط بيت ص % % 8(@)(@@) % لا بد ذاك يكون ماء مطلقا % عما يخالطه من الأكوان % % 9(@)(@@) % حتى به حدث يزول وإن يكن % % ماء تراه مقيدا بمعاني % % 10(@)(@@) % فهو المقيد وهو ليس برافع % % حدثا كما قالته أهل الثمان % % PageV01P1609 11(@)(@@) % لكنهم في رفعة خبثا لهم % % قولان والرفع اقتضاء بيان % % 12(@)(@@) % والماء ذاك المطلق حقيقة بالحق اذتحقيق كل حقيقة بالحق إذ هو لا سواه وكل شيء فاني % % هو لا سواه وكل شيء فاني % % PageV01P1610 البحر : - 1(@)(@@) % إايك تشهد غير ودع العنا % % لا أنت في هذا الوجود ولا أنا % % 2(@)(@@) % هذا الوجود هو الحقيقي الذي % % نبدو به ونعود إلى الفنا % % 3(@)(@@) % واذا به عدنا نعود كلم نكن % % واذا بدونا فهو باد دوننا % % 4(@)(@@) % والباطل الشان الذي هو باطل % % والحق حق أن تباعد أو دنا % % 5(@)(@@) % إن الذي هو عالم بك جاهل % % يا من تحجب بالسوى وتبينا % % 6(@)(@@) % لونان كالحرباء لون خلائق % % ظهرت ولون حقائق هن المنى % % 7(@)(@@) % يا ابن الحوادث لا تظن فلا تكن % % أنت القديم وإن بدا بك واعتنى % % 8(@)(@@) % هو عنك ممتاز هنا بوجوده % % وبك امتياز عنه في عدم هنا % % 9(@)(@@) % هيهات هيهات الوجود يكون للع % % دم المقدر أو بعكس كالانا % % 10(@)(@@) % إن الحلول من الجهول توهم % % في قول أهل الله يجعل ديدنا % % PageV01P1611 11(@)(@@) % ما إن سمعت ولست أسمعى عاقلا % % أبدا يظن الحق يسكن ممكنا % % 12(@)(@@) % إن الوجود على الحقيقة واحد % % في كل شيء قد بدا وتعينا % % 13(@)(@@) % والشيء تقدير له فاني كما % % قد جاء فاكشف عنه إن تك مؤمنا % % 14(@)(@@) % والحق قيوم لمن هو باطل % % وهو السوى بالوهم قام فأفتنا % % PageV01P1612 البحر : - 1(@)(@@) % من شدة القرب مني % % شهدت أنك أني % % 2(@)(@@) % فقلت ما قلت جهلا % % وذاك من سوء ظني % % 3(@)(@@) % وحين حققت أمري 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms323# % % والوهم قد زال عني % % 4(@)(@@) % تركت هذا وهذا % % ثم الفنا صار فني % % 5(@)(@@) % وصرت عن عيب غيب % % بما أقول اكتنى % % 6(@)(@@) % وزال عني ترجى % % علمي به والتمني % % 7(@)(@@) % والعلم كالجهل عندي % % فيه وزال التعنى % % 8(@)(@@) % اذ كل ذلك خلق % % والخلق ما عنه يغني % % 9(@)(@@) % وليس يشبه ربي % % شيء فكن في التهني % % 10(@)(@@) % أنا الموحد ذوقا % % فخلني يا مثني % % PageV01P1613 البحر : - 1(@)(@@) % إنما الإيمان نور % % في قلوب المؤمنين % % 2(@)(@@) % وهو تصديق وإذعا % % ن وتسليم متين % % 3(@)(@@) % لكتاب الله والس % % نة عن طه الأمين % % 4(@)(@@) % غير محتاج لعقل % % أو لفهم مستبين % % 5(@)(@@) % أو دليل أو لشيء % % خارج عنه معين % % 6(@)(@@) % هو نور هو نور % % يتلالأ في الكمين % % 7(@)(@@) % وهو سر الله فينا % % وطرق الصالحين % % 8(@)(@@) % هو نور وكذاك الش % % يء بالنور يبين % % 9(@)(@@) % وبه لا بسواه % % كان سير المتقين % % 10(@)(@@) % عرفوا الله وذاقوا % % وصفه في كل حين % % PageV01P1614 11(@)(@@) % كشفوا عن كل شيء % % كان في دنيا ودين % % 12(@)(@@) % لبس الإيمان منهم % % ذلك الحصن الحصين % % PageV01P1615 البحر : - 1(@)(@@) % كل الكلام كلامك يا عظيم الشان % % أما يوحي هو الإلهام للإنسان % % 2(@)(@@) % أو من وراء حجاب صورة الأكوان % % أو ترسل الرسل بالتبليغ والتبيان % % PageV01P1616 البحر : - 1(@)(@@) % انظر لموسى نبي الله يا مفتون % % لما تجلى له في شجرة الزيتون % % 2(@)(@@) % وانظر لابليس قبلو ذلك الملعون % % لما احتجب عنه في آدم وما هو دون % % PageV01P1617 البحر : - 1(@)(@@) % آدم نبي واحتجب فيه عن الشيطان % % حتى كفر والتبس أمره له ما بان % % 2(@)(@@) % وكان مجلاه في زيتونة البستان % % تبارك الله أن السر في السكان % % PageV01P1618 البحر : - 1(@)(@@) % لنور عين الوجود أعيان % % وفوق إنسان تلك إنسان % % 2(@)(@@) % فإنها رتبة مقيدة % % إطلاقها في القلوب إحسان % % 3(@)(@@) % يقول من يشهد الرجال بها % % تبارك الله فهو رحمان % % 4(@)(@@) % وههنا لا هناك منزلة % % ينزلها في الرسول قرآن % % 5(@)(@@) % بدا بدا كلما أقول داب % % بدا بدا فهو فهو إيمان % % 6(@)(@@) % محا وقد أثبت اللطائف في % % عوارف الأمر إذ هو الشان % % 7(@)(@@) % وعندنا نحن فهي نافذة % % وعنده غير نافذان % % 8(@)(@@) % والآن في الآن واحد فاذا % % ثنى تثنى وأشرق والحان % % 9(@)(@@) % وإنها في العيون زخرفة % % وإنها في الصماخ ألحان % % 10(@)(@@) % به به عينذاك له % % وصوت طير الغناء عيدان % % PageV01P1619 11(@)(@@) % خزانة الحرف فتحها شرف % % والقفل ربح لها وخسران % % PageV01P1620 البحر : - 1(@)(@@) % إن 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms324# في قرع المثاني % % بهجة السبع المثاني % % 2(@)(@@) % وجفون العين فيها % % حفظ أسرار العيان % % 3(@)(@@) % جل نور قد تجلى % % في تناويع البيان % % 4(@)(@@) % واحد وهو كثير % % وجميع الكون فاني % % 5(@)(@@) % ذاته الذات تسامت % % في لباس الحدثان % % 6(@)(@@) % وصفات لكلا لاحت % % بتصاريف المباني % % 7(@)(@@) % هو بل لا هو عندي % % هو في ناء وداني % % 8(@)(@@) % نزهوا أو شبهوا إلا % % تعرفوا غير المعاني % % 9(@)(@@) % والملا وهم عظيم % % والخلا محض افتتان % % 10(@)(@@) % إنما الماء على ما % % هو في كسر الأواني % % PageV01P1621 البحر : - 1(@)(@@) % يا من به تتكون الأكوان % % وبأمره تتلون الألوان % % 2(@)(@@) % هي هذه هي هذه هي هذه % % كل العوالم تلك والإنسان % % 3(@)(@@) % هي كعبة الغيب المقدس طائف % % أبدا بها ما يظهر الحدثان % % 4(@)(@@) % ويمينها الحجر السعيد لبيعة % % قد مد حيث شهودها الإيمان % % 5(@)(@@) % والروح طائفة وجسمي طائف % % هذا لهذا في الوجود قران % % 6(@)(@@) % حتى إذا كشف القناع وأشرقت % % تلك الحقيقة والعيان عيان % % 7(@)(@@) % وهناك يبر القلب من داء الجفا % % وبوصلنا يتبدل الهجران % % PageV01P1622 البحر : - 1(@)(@@) % لي وجود بمن يقول أنا % % حاش لله أن أكون أنا % % 2(@)(@@) % وأنا الحي والسميع به % % حاش لله أن أكون أنا % % 3(@)(@@) % وأنا العالم البصير به % % حاش لله أن أكون أنا % % 4(@)(@@) % وأنا القادر المريد به % % حاش لله أن أكون أنا % % 5(@)(@@) % صار عقلي به يصرفه % % حاش لله أن أكون أنا % % 6(@)(@@) % اعقل الشيء منكرا فهما % % حاش لله أن أكون أنا % % 7(@)(@@) % ثم عقلي فوق العقول به % % حاش لله أن أكون أنا % % 8(@)(@@) % شاكرا نعمة الشكور به % % حاش لله أن أكون أنا % % 9(@)(@@) % صابرا باسمه الصبور هنا % % حاش لله أن أكون أنا % % 10(@)(@@) % إن علمي عن العقول علا % % حاش لله أن أكون أنا % % PageV01P1623 11(@)(@@) % افعل الفعل ثم اتركه % % حاش لله أن أكون أنا % % 12(@)(@@) % جامعا فارقا بقدرته % % حاش لله أن أكون أنا % % 13(@)(@@) % حيث لي طاعة معصية % % حاش لله أن أكون أنا % % 14(@)(@@) % وأنا نيتي به وله % % حاش لله أن أكون أنا % % 15(@)(@@) % ولمن شئته أكلمه % % حاش لله أن أكون أنا % % 16(@)(@@) % كل مالي من الصفاء به % % حاش لله أن أكون أنا % % 17(@)(@@) % كل شيء أراه قال كذا % % حاش لله أن أكون أنا % % 18(@)(@@) % إنما ذاك واحد أحد % % حاش لله أن أكون أنا % % 19(@)(@@) % ظاهر بالذي يريد 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms325# له % % حاش لله أن أكون أنا % % 20(@)(@@) % فاسمعوا القول يا خليقته % % حاش لله أن أكون أنا % % PageV01P1624 21(@)(@@) % واسمى العبد للغنى به % % حاش لله أن أكون أنا % % 22(@)(@@) % كنت لا شيء ثم صرت كذا % % حاش لله أن أكون أنا % % 23(@)(@@) % حاصل الأمر لا أنا أبدا % % حاش لله أن أكون أنا % % PageV01P1625 البحر : - 1(@)(@@) % قل لقوم غصبوا أنفسهم % % في يد الله وهم لا يعلمون % % 2(@)(@@) % وادعوها ملكهم من جهلهم % % مستقلين بها كن فيكون % % 3(@)(@@) % قوله لحقا له ما في السم % % وات والأرض تقرأون % % 4(@)(@@) % وله قل كل شيء هالك % % قال أيضا وإليه ترجعون % % PageV01P1626 البحر : - 1(@)(@@) % يا طلعة الحب لاقيتو ولا قاني % % ووجههه النور ولا أصفر ولا قاني % % 2(@)(@@) % كم فيه من أشعري حائر ولا قاني % % مشتت الفكر لا حائز ولا قاني % % PageV01P1627 البحر : - 1(@)(@@) % الله أكبر من للعبد يرحمه % % 2(@)(@@) % من كل أمر له الخلق يعمله % % 3(@)(@@) % كم قلت مما أقاسيه واكنمه % % 4(@)(@@) % لا أشتكي زمني هذا فاظلمه % % وإنما اشتكى من أهل ذا الزمن % % 5(@)(@@) % فجورهم بضرب الرائي به المثلا % % 6(@)(@@) % وقربهم يورث الاسقام والعللا % % 7(@)(@@) % لو قيل ليسوا بناس عنهم لقلت بلى % % 8(@)(@@) % هم الذئاب التي تحت الثياب فلا % % تكن إلى أحد منهم بمؤتمن % % 9(@)(@@) % أرجو من الله أني أبلغ الأجلا % % 10(@)(@@) % منهم سليما ومن شر لهم حصلا % % PageV01P1628 11(@)(@@) % جل الذي هو حسبي وحده وعلا % % 12(@)(@@) % قد كان لي كنز صبر فافتقرت إلى % % انفاقه في مداراتي لهم ففنى % % PageV01P1629 البحر : - 1(@)(@@) % إني أنا وبينما % % قلت لكم إني أنا % % 2(@)(@@) % كنت أنا ألف أنا % % مكررا مكونا % % 3(@)(@@) % بسرعة من خالقي % % غيب الغيوب ذي السنا % % 4(@)(@@) % برق أضا وبطنا % % ثم أضا وبطنا % % 5(@)(@@) % لأنني عن أمره % % كن فيكون باعتنا % % 6(@)(@@) % وأمره واحدة % % طبق الذي قال لنا % % 7(@)(@@) % وهكذا الكون جميعا % كل وقت مثلنا % % 8(@)(@@) % لأنه خلق وخل % % وات والأرض تقرأون % % 9(@)(@@) % فإن من آياته % % خلقا بأمر كونا % % 10(@)(@@) % ألا له الخلق كما % % قد قال والأمر هنا % % PageV01P1630 11(@)(@@) % فصدقوه واتركوا % % ما للعقول ديدنا % % 12(@)(@@) % فالعقل ربط كله % % للمدركات هاهنا % % 13(@)(@@) % وربنا أصدق من % % عقل الفتى تيقنا % % 14(@)(@@) % ومع كتاب الله لا % % يليق غيره بنا % % 15(@)(@@) % وإن قومي قد بنوا % % عليه أقوم البنا % % 16(@)(@@) % وما رضوا عقولهم % % تكون فيهم آمنا % % 17(@)(@@) % على عقائد لهم % % لأنها خلق الدنا 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms326# % % 18(@)(@@) % والقوم لما كوشفوا % % بأمره وهو المنى % % 19(@)(@@) % رأوا به قيامهم % % وكل شيء علنا % % 20(@)(@@) % عن أمره كالبرق أو % % مثل أنابيب القنا % % PageV01P1631 21(@)(@@) % من أجل ذا يقول من % % قد قال خالقي أنا % % 22(@)(@@) % وقول هذا خطأ % % أوجبه ذوق الفنا % % 23(@)(@@) % لنفسه وغيره % % بلا ثبوت زمنا % % 24(@)(@@) % فلو صحا من سكره % % رأى الإله غيرنا % % 25(@)(@@) % لأننا خلق له % % بأمره كوننا % % 26(@)(@@) % وأمره كاللمح قل % % من بصر إذا رنا % % 27(@)(@@) % والخلق هكذا بلا % % تردد ولا عنا % % 28(@)(@@) % كما أتي ربي قل % % يقذف بالحق بنا % % 29(@)(@@) % نظير ما قالوه في الأع % % راض قولا متقنا % % 30(@)(@@) % لو أنصفوا فالكل أع % % راض وهذا عندنا % % PageV01P1632 31(@)(@@) % لكنهم قد غرهم % % عقل لهم تفننا % % 32(@)(@@) % في كل شيء فاقتدوا % % به وأنسوا ربنا % % 33(@)(@@) % فما اقتدوا بقوله % % ولا رأوه حسنا % % 34(@)(@@) % وأنكروا على الذي % % بقوله الحق أغتنى % % 35(@)(@@) % ولم يتابعهم على % % عقولهم ولا أعتنى % % 36(@)(@@) % بهم وربي حاكم % % غدا بحق بيننا % % PageV01P1633 البحر : - 1(@)(@@) % حاولت في المرآة انظر من أنا % % فرأيت شخصا أنكرته عيوني % % 2(@)(@@) % مستبشع الشدقين مندلق اللحى % % غلب البياض على السواد الجون % % 3(@)(@@) % يعلو القذى أجفانه ولعابه % % مع ماء منخره وماء جفون % % 4(@)(@@) % لا ثغر في فمه وعن أسنانه % % متعوض بالدردر المسنون % % 5(@)(@@) % عيناه غائرتان في اصداغه % % وجبينه في صفرة وكمون % % 6(@)(@@) % فسألته من أنت قال أنا الذي % % هو أنت بدل عقله بجنون % % 7(@)(@@) % ذهبت شبيبته ورونق وجهه % % والضعف لازمه وفرط الهون % % 8(@)(@@) % عبد ولكن ربه بربه % % وعطاؤه كحيا عليه هتون % % 9(@)(@@) % ما إن له عمل سوى توحيده % % وسوى الرجاء لكافه والنون % % 10(@)(@@) % بمشي ويعثر في معالم ذنبه % % مشي المكبل في قيود ديون % % PageV01P1634 11(@)(@@) % ألف التجلي من صفات إلهه % % وظهوره يرمي به لبطون % % 12(@)(@@) % نودي عليه ولات حين البيع من % % يشري له عبدا بدون الدون % % 13(@)(@@) % فتضاكحت منه الرجال وأعرضوا % % عنه وقالوا العبد عبد مجون % % 14(@)(@@) % جم العيوب وماله غير الفنا % % سترا بلوذ بسره المكنون % % 15(@)(@@) % فأجبته قف وانتظر فلربما % % جبر المسعر صفقة المغبون % % PageV01P1635 البحر : - 1(@)(@@) % على المحبة من أهواه ألفاني % % وما طردني وللأعتاب الفاني % % 2(@)(@@) % يا قلب لا ألف بل إن كان ألفانولنا سر عظيم عند رب العالمينا % % فأقنع بباقي ولا تظر إلى الفانيسقط بيت ص % % PageV01P1636 البحر : - 1(@)(@@) % إن مولانا كريم % % يعتنى بالمتقينا % % 2(@)(@@) % وله 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms327# سر مقيم % % في قلوب العارفينا % % 3(@)(@@) % أسعد البكري سليم % % صدره زاد يقينا % % 4(@)(@@) % وقال والقول نظيم % % عندما صار أمينا % % 5(@)(@@) % ولنا سر عظيم % % عند رب العالمينا % % 6(@)(@@) % دور % % 7(@)(@@) % نسل صديق النبي % % وابن خير الخلق طه % % 8(@)(@@) % فاز بالقدر العلي % % وحوى عزا وجاها % % 9(@)(@@) % قال قولا بالتهي % % للمقامات انتباها % % 10(@)(@@) % حيث وافاه نسيم % % من جناب الأولينا % % PageV01P1637 11(@)(@@) % ولنا سر عظيم % % عد رب العالمينا % % 12(@)(@@) % دور % % 13(@)(@@) % إن لله عطايا % % لا بسعي ولا اكتساب % % 14(@)(@@) % تمنح العبد مزايا % % ليس تحصى بحساب % % 15(@)(@@) % باهرات للبرايا % % فاتحات خير باب % % 16(@)(@@) % وصراط مستقيم % % قول بكري أعينا % % 17(@)(@@) % ولنا سر عظيم % % عند رب العالمينا % % 18(@)(@@) % دور % % 19(@)(@@) % رجع الفرع الشريف % % لأصول ثابتات % % 20(@)(@@) % وبدا القدر المنيف % % في رفيع الدرجات % % PageV01P1638 21(@)(@@) % وتلافاه اللطيف % % فهو للفيض مواتى % % 22(@)(@@) % وهو للحق نديم % % حصل الفتح المبينا % % 23(@)(@@) % ولنا سر عظيم % % عند رب العالمينا % % 24(@)(@@) % دور % % 25(@)(@@) % ومن الله صلاتي % % وسلامي كل ساعة % % 26(@)(@@) % لنبي المكرمات % % فاق فضلا وبراعه % % 27(@)(@@) % ما تهنى بالهبات % % من نحا نحوا الجماعة % % 28(@)(@@) % قال والقول عميم % % مذ رقى شرعا ودينا % % 29(@)(@@) % ولنا سر عظيم % % عند رب العالمينا % % PageV01P1639 البحر : - 1(@)(@@) % هو ما هو وأنا ما هو أنا % % واحد هذا تبدى علنا % % 2(@)(@@) % فأعجبوا من واحد واثنين ما % % هو إلا واحد وهو أنا % % 3(@)(@@) % ظاهر بي باطن عني بي % % لظهوري وبطوني بدنا % % 4(@)(@@) % نفخ الروح به عن أمره % % وهي لولا أمره كانت فنا % % 5(@)(@@) % جل رب الخلق لا يعرفه % % غيره والخلق في بحر العنا % % 6(@)(@@) % نحن لا نحن وبالفقر إلى % % يد من نعرف مدت بالغنى % % 7(@)(@@) % إن نقل قلنا وما ظنا وقد % % قال إذ قال وما قال كنى % % 8(@)(@@) % وكما الكل هم الكل كذا % % ما هم الكل فكن مستيقنا % % 9(@)(@@) % هذه حالة أهل الله لا % % أهل غير الله صارت ديدنا % % 10(@)(@@) % ذوقهم يكشف عنها وبها % % من علوم الله قد نالوا المنى % % PageV01P1640 البحر : - 1(@)(@@) % إنما وحدة الوجود فنون % % وهو قول الإله كن فيكون % % 2(@)(@@) % ليس للكون غيرها من وجود % % كل وقت له بها تكوين % % 3(@)(@@) % وهي أمر الإله بالخلق يبدو % % مثل ما قاله الكتاب المصون % % 4(@)(@@) % إنما أمرنا لشيء إذا ما % % قد أردناه فالمقول شؤون % % 5(@)(@@) % تختفي تارة وتظهر طورا % لمح طرف ولمع برق يبين % % 6(@)(@@) % فتراه العقول تحسب جهلا % % إن 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms328# هذا تحرك وسكون % % 7(@)(@@) % وهي تجديد كل شيء سريعا % وبه كل عاقل مجنون % % 8(@)(@@) % إنما العقل ربط شيء بشيء % % ذاك معناه فأسمعوا يا عيون % % 9(@)(@@) % يا عيون القلوب حسى بهذا % % قبل ما تنطوي عليك الجفون % % 10(@)(@@) % شهد الله أن ما قلت حقهو هذا نعم وما هو هذا والتجلي له به تلوين % والنبيون والكتاب المبينسقط بيت ص % % PageV01P1641 11(@)(@@) % لا تقل لا أنى نصحتك فأسمع % % وبغيري فإنك المفتون % % 12(@)(@@) % حالة مثل ما الجميع عليها % % لكن الفهم معرض مغبون % % 13(@)(@@) % وجميع الذي نقول وقلنا % % هو قول الناس الذي يستبين % % 14(@)(@@) % نحن ذقناه باليقين وأما % % غيرنا فهو عندهم مظنون % % 15(@)(@@) % غير أن الوجود لله لا لل % % خلق والخلق بالوجود يكون % % 16(@)(@@) % وسوانا قولي ذاك وجود % % غير هذا فيفترى ويخون % % 17(@)(@@) % جعلوه جنسا وقد نوعوه % % كل نوع وإن هذا جنون % % 18(@)(@@) % ليس ينعد حادث مع قديم % % باطل مع حق وعال ودون % % 19(@)(@@) % إنما الحادث الثبوت له في % % نفسه لا الوجود يا مسكين % % 20(@)(@@) % والوجود الحق القديم وجود % % هو حق مقرر لا يهون % % PageV01P1642 21(@)(@@) % متجلى على الدوام بما في % % علمه من ثوابت فتبين % % 22(@)(@@) % علمه فيه ثابت كل شيء % % يتجلى به فتبدو الفنون % % PageV01P1643 البحر : - 1(@)(@@) % يا من إلى بابه باللطف ألجاني % % إن لم يلذ بك من ذا يرحم الجاني % % 2(@)(@@) % أدعوك بالمتقي الإنس والجان % % أتى ثمار الرضى أغدو لها الجاني % % PageV01P1644 البحر : - 1(@)(@@) % يا نديمي إن غابت الناس عني % % فتبدت حقيقة الحق مني % % 2(@)(@@) % غابت الناس ابطنوا بظهور % % منك لي حالة تخالف ظني % % 3(@)(@@) % أنت كلمتني بأحرف ذاتي % % وأجبت الكلام بي لك عني % % 4(@)(@@) % أنني في يديك تفعل بي ما % % شئت قدما من راحة وتعنى % % 5(@)(@@) % وأنا الحادث الذي بالتجلي % % منك أبدو وأختفي بالتجني % % 6(@)(@@) % قدرتني الأسماء منك قديما % بعد علم أحاط بي قدرتني % % 7(@)(@@) % تارة أنت معرض عن وداديفتريني الإقبال منك اعتناء بي وفن لي منك طورا وفني % % ثم طورا تمدني بالتمنيسقط بيت ص % % 8(@)(@@) % عدم كلنا وأنت وجود % % عنك بالحق لا نزال نكني % % 9(@)(@@) % أنت حق وباطل نحن هذا % % جاءنا في تصديق قول المغنى % % 10(@)(@@) % كل شيء مما خلا الله ربي % % باطل والصحيح أنك إني % % PageV01P1645 11(@)(@@) % قلت بي كلما أقول وما قد % % قلت في 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms329# خمرة وفي وصف دن % % 12(@)(@@) % وغلام وروضة ورداح % % وانعطاف وميلة وتثنى % % 13(@)(@@) % وهو قولي لأنه هو مثلي % % وهو فاني ونور وجهك يغني % % PageV01P1646 البحر : - 1(@)(@@) % ليس الوجود كما يقال اثنان % % حق وخلق إذ هما شيئان % % 2(@)(@@) % هذا المقال عليه قبح عقيدة % % عند المحقق ظاهر البطلان % % 3(@)(@@) % ولد الاله بها النصارى قولهم % % والكذب جاء بذاك في القرآن % % 4(@)(@@) % والله لم يولد فوا عجبا لمن % % قالوا الوجود بعقلهم قسمان % % 5(@)(@@) % قالوا وجود حادث هذا وفي % % غيب الغيوب وجود حق ثاني % % 6(@)(@@) % يا ليت شعري ذا وجود حادث % % من أين جاء لهذه الأعيان % % 7(@)(@@) % من ربها والرب لم يولد ولم % % يخرج وجود منه للأكوان % % 8(@)(@@) % أو جاء من عدم وليس يجيء من % % عدم وجود اذ هما ضدان % % 9(@)(@@) % والضد ليس يجيء منه ضده % % أبدا وما الضدان يجتمعان % % 10(@)(@@) % بل إنما هذا وجود واحد % % وبنا يلوح ولك شيء فاني % % PageV01P1647 البحر : - 1(@)(@@) % مرج البحرين اذ يلتقيان % % وهما بحرا وجود وكيان % % 2(@)(@@) % برزخ بينهما لا يبغيان % % هي نفس ذات أوصاف حسان % % 3(@)(@@) % تعبد الله على الكشف عيان % % وهي بالله تعالى المستعان % % 4(@)(@@) % حضرة قدسية ذات امتنان % % أحسنت أعمال بر كل آن % % 5(@)(@@) % تقتفي السنة والفرض المصان % % دأبها الصدق واخلاص الجنان % % 6(@)(@@) % وهي أمر وهي خلق وفلان % % وهي رب لا مكان لا زمان % % 7(@)(@@) % عندها هذا على ما فيه كان % % وكذا هذا على ما فيه فان % % 8(@)(@@) % عدم صرف كثير الافتنان % % ووجود كل يوم فيه شان % % 9(@)(@@) % لا طغا هذا على هذا فبان % % لا ولا هذا على هذا فهان % % 10(@)(@@) % فارس الميدان في يوم الرهان % % يعرف الحال ويدري ما استبان % % PageV01P1648 11(@)(@@) % والذي ما عنده منا يدان % % سوف يلقى الله مذلولا مهان % % PageV01P1649 البحر : - 1(@)(@@) % أدر صرفا خمور ألا ندرينا % % على شعث الرجال الاندرينا % % 2(@)(@@) % وروق أيها الساقي شرابا % طهورا لذة للشاربينا % % 3(@)(@@) % ولا تمزج فإن المزج شرك % % حرام في طريق العار فينا % % 4(@)(@@) % فإنك أنت نور النور باد % % وإن سموك لي طه الأمينا % % 5(@)(@@) % ألا يا ابن المدامة كن رفيقي % % على صرف زكت شرعا ودينا % % 6(@)(@@) % وخذها من يد الساقي ودندن % % لها واسلك بها الدرب اليمينا % % 7(@)(@@) % وعربد بين أقوام كرام % % متى قاموا يقوموا أجمعينا % % 8(@)(@@) % هي الروح التي الأموات 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms330# تحيا % % بها فنقوم جمعا طائعينا % % 9(@)(@@) % معتقة ورثناها ففزنا % % بها من عهد آدم عن أبينا % % 10(@)(@@) % أبونا الغوث محي الدين هذا % % وجدناه بواقعة رأينا % % PageV01P1650 11(@)(@@) % هي الحانات والكاسات تملى % % فنسقيها القلوب الآمنينا % % 12(@)(@@) % ونكشف وجهها لرجال صدق % % محارمها وليسوا أجنبينا % % 13(@)(@@) % عصابة وحدة كانوا بخبث % % فحاؤونا فصاروا طاهرينا % % 14(@)(@@) % يظل يسوقهم ساقي الحميا % % إلى حان الطلا حينا فحينا % % 15(@)(@@) % فيعطفهم عليه ويصطفيهم % % له ويحن جانبهم حنينا % % 16(@)(@@) % هلموا يا رجال الغيب واسعوا % % وصلوا واركعوا بي ساجدينا % % 17(@)(@@) % وإياكم وغيب الغيوب عنه % % فصوموا ثم كونوا مفطرينا % % 18(@)(@@) % بما يبدي لكم من كل شيء % % فإن الشيء يظهره لدينا % % 19(@)(@@) % وأما ذاته فعلت وجلت % % فليس بها الحوادث عالمينا % % 20(@)(@@) % وإن كانوا ملائكة كراما % % وكانوا أنبياء مرسينا % % PageV01P1651 21(@)(@@) % فإن جميعهم منها تجلى % % عليهم مثل فعل الفاعلينا % % 22(@)(@@) % كما ظهرات بآدم وهو خلق % % فأعمت عنه إبليس اللعينا % % 23(@)(@@) % وظن بأنه للذات يدري % % لهذا كان أقوى العابدينا % % 24(@)(@@) % وقد رام المحال وليس إلا % % مظاهر فعل أسماء يرينا % % 25(@)(@@) % فقل سجدت لآدم مذ تجلى % % به ربي ملائكة يقينا % % 26(@)(@@) % وابليس اللعين أبى سجودا % % لديه فلم يجد أحدا معينا % % 27(@)(@@) % وكان بجهله عبدا كفورا % برب ظاهر في الجاهلينا % % 28(@)(@@) % فوسوس في المظاهر رام صدا % % لها عن سر رب العالمينا % % 29(@)(@@) % ألا ما ثم غير الله غيب % % مظاهره بدت للعاشقينا % % 30(@)(@@) % فأنكر بعضهم والبعض يحظى % % به رغما لانف المنكرينا % % PageV01P1652 البحر : - 1(@)(@@) % لامعه ونحن لامعنا % % ونحن لا حرف ولا معنى % % 2(@)(@@) % بل نحن أمر واحد كلنا % % اشارة القوسين أو أدنى % % 3(@)(@@) % وهو الوجود الحق كنا به % % وهما على وهم وما كنا % % 4(@)(@@) % نذوب ذوب الثلج في مائه % % إذا تجلى عندنا استغنى % % 5(@)(@@) % صفاته مرجعها ذاته % % إذ لا ثلاث لا ولا مثنى % % 6(@)(@@) % يا وحدة مطلقة ما على % % وجودها حكم له يعني % % 7(@)(@@) % بالعدم الصرف أحاطت كما % % قالت لنا لما لها قلنا % % 8(@)(@@) % ونحن لا قول ولا قائل % % ولا نرى خوفا ولا أمنا % 9(@)(@@) % وقد وقفنا عند أسمائه % % شرعا فما أغنى وما أقنى % % 10(@)(@@) % وكلما جزنا به جاءنا % % شرك الخفا يدنى إلى المغنى % % PageV01P1653 11(@)(@@) % والأصل لا علم به عندنا % % كلا ولا جهل به منا % % 12(@)(@@) % ولا حضور لا ولا غيبة % % وقد عدمنا الظهر والبطنا % % 13(@)(@@) % هذا 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms331# جنون الحق في عقلنا % % يدريه من في الحق قد جنا % % 14(@)(@@) % يا ابن طريق الحق لا تلحني % % من وحد الموجود ماثنى % % 15(@)(@@) % قول المجانين الذي قلته % % أنى لعقل فهمه أني % % PageV01P1654 البحر : - 1(@)(@@) % إن أهل التمكين في التلوين % % ليس عنهم لي حالة تلويني % % 2(@)(@@) % علمنا كلنا بنا وبما نح % % ن به عالمون في كل حين % % 3(@)(@@) % عدم في وجود علم قديم % % وكلام لله حق مبين % % 4(@)(@@) % قد أتاه الوجود من قول ربي % % كن وهذا وجوده عين يقين % % 5(@)(@@) % لا تقل عن وجود كن ولد كا % % ن فإن التوليد أكثر مين % % 6(@)(@@) % ربنا الله لم يلد لا ولم يو % % لد كما جاء في الكتاب المبين % % 7(@)(@@) % إنما ربنا المؤثر فينا % % ظاهرا باطنا على التعيين % % 8(@)(@@) % فإذا العين أبصرت أثر الأب % % صار فيها بأمره المستبين % % 9(@)(@@) % وإذا ما سمعت بالأذن فالتأثي % % ر في السمع للقوي المتين % % 10(@)(@@) % وكذا الرجل أثر المشي فيها % % ربها الحق مثل حكم اليدين % % PageV01P1655 11(@)(@@) % وكذا العقل أثر العقل فيه % % كل معنى يلوح بالتكوين % % 12(@)(@@) % فإذا ما كنا فإنا جميعا % % هو فينا مؤثر كل حين % % 13(@)(@@) % وسوى ذلك المؤثر شان % % هو فيه بحكم دنيا ودين % % 14(@)(@@) % فتأمل مقالتي وتحقق % % ها بتأثير مر رب معين % % PageV01P1656 البحر : - 1(@)(@@) % كم أتعب الحب من عاشق وكم عنى % % والصب للحي كم أقلق وكم عنى % % 2(@)(@@) % هذا الحبيب الذي مع بعده عنا % % ما عن إنني أسلوه ما عنا % % PageV01P1657 البحر : - 1(@)(@@) % أستغفر الله من سري ومن علني % % أستغفر الله من نفسي ومن بدني % % 2(@)(@@) % أستغفر الله من روحي التي نفخت % % عن أمر خالقها في جسمي الوهن % % 3(@)(@@) % أستغفر الله من عقلي إذا اختلفت % % به المعاني ومن فهمي ومن فطني % % 4(@)(@@) % أستغفر الله من فكري وما سرحت % % خواطري فيه من باد ومكتمن % % 5(@)(@@) % أستغفر الله من يقظتي كسبت % % وما علي جرى في النوم والوسن % % 6(@)(@@) % أستغفر الله مما باشرته يدي % % من كل شيء قبيح الفعل أو حسن % % 7(@)(@@) % أستغفر الله من رجل وما بطشت % % في الخير والشر تدنيني وتبعدني % % 8(@)(@@) % أستغفر الله مما قد رأى بصري % % في طول عمري ومما قد وعت أذني % % 9(@)(@@) % أستغفر الله مما قد نطقت به % % من كل لفظ شريف في 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms332# الورى ودنى % % 10(@)(@@) % أستغفر الله من كفى وما وضعت % % عليه من ناعم في اللمس أو خشن % % PageV01P1658 11(@)(@@) % أستغفر الله مما قد شممت له % % من الروائح في الخضراء والدمن % % 12(@)(@@) % أستغفر الله مما ذقته بفمي % % مما أراه كريها بها أو أراه هني % % 13(@)(@@) % أستغفر الله من سخطي ومن غضبي % % ومن رضاي واشفاقي ومن جبني % % 14(@)(@@) % أستغفر الله من ضيقي ومن سعتيأستغفر الله من قولي بلى ونعم ولا وكيف ويا ليتي وهل ومن % ومن هزالي ومن سقمي ومن سمنيسقط بيت ص % % 15(@)(@@) % أستغفر الله من هذا لما وبما % % قد كان هذا الأمر بالخفا قمن % % 16(@)(@@) % أستغفر الله مما قد دريت وما % % لم أدر من خبر في الناس يعجبني % % 17(@)(@@) % أستغفر الله مما قد أضعت من الأن % % فاس باللهو في عمري وبالدرن % % 18(@)(@@) % أستغفر الله من كل الأمور ومن % % جميع ما لي من الحاجات في زمني % % 19(@)(@@) % أستغفر الله من كل المقاصد فياستغفر الله من ما كان في عملي وما هممت به منه ولم يكن % دهري ومن امل في الصدر محتقنسقط بيت ص % % 20(@)(@@) % أستغفر الله من كل الذنوب ومن % % كل البلايا وكل الشر والفتن % % PageV01P1659 21(@)(@@) % أستغفر الله من دمع بكيت به % % ومن دم كان مني سائلا ومني % % 22(@)(@@) % أستغفر الله من صبري ومن جزعي % % ومن غرامي ومن شوقي ومن شجني % % 23(@)(@@) % أستغفر الله من سهل علي ومن % % صعب ومن فرح عندي ومن حزن % % 24(@)(@@) % أستغفر الله مما قد أتيت به % % من الفروض لوجه الله والسنن % % 25(@)(@@) % أستغفر للها من فعل الطهارة في % % قلب وجسم من العصيان والدرن % % 26(@)(@@) % أستغفر الله من طاعات انتسبت % % إلى جسمي بها مما تعبت ضني % % 27(@)(@@) % أستغفر الله من تركي لمعصية % % ومن لسان يقول الحق مندهن % % 28(@)(@@) % أستغفر الله مما في اعتقادي من % % توحيد ربي إذا ما قلت ينفعني % % 29(@)(@@) % أستغفر الله من كوني أكون على % % زعمي مع الله حيث الكون فيه فنى % % 30(@)(@@) % أستغفر الله من أهلي ومن ولدي % % ومن قريبي ومن صهري ومن ختني % % PageV01P1660 31(@)(@@) % أستغفر الله من بيت أبيت به % % ومن فراشي ومن ثوبي ومن سكني % % 32(@)(@@) % أستغفر الله من كتبي ومن قلمي % % ومن دواتي ومن حبري ومن 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms333# مهني % % 33(@)(@@) % أستغفر الله من شعر نظمت ومن % % تصنيف علم ومن عي ومن لسن % % 34(@)(@@) % أستغفر الله من درس أقررهأستغفر الله من وقفي وما ملكت يدي وكل وظيفاتي ومن مؤني % % لطالب صادق فيه وممتحنسقط بيت ص % % 35(@)(@@) % أستغفر الله مما قد وهبت وما % % قد اشتريت وما قد بعت بالثمن % % 36(@)(@@) % أستغفر الله من كل الوقائع لي % % في غيبتي عن جماعاتي وفي وطني % % 37(@)(@@) % أستغفر الله مما قد ركبت وما % % عليه أركب من خيل ومن اتن % % 38(@)(@@) % أستغفر الله مما قد سمعت به % % للغير من صدقات لي ومن منن % % 39(@)(@@) % أستغفر الله من فعل الجميل إذا % % فعلته مع غيري وأصلا شطني % % 40(@)(@@) % أستغفر الله من حل الحرام ومن % % تحريم كالقهوة السوداء والتتن % % PageV01P1661 41(@)(@@) % أستغفر الله من بشر على ملق % % وهدنة مثل ما قالوا على دخن % % 42(@)(@@) % أستغفر الله من قوم أصاحبهم % % على اختلاف لهم في الحب والأحن % % 43(@)(@@) % أستغفر الله من أمر به فهموا % % سوءا ولم أدره مني ومن لدني % % 44(@)(@@) % أستغفر الله من ذكر البرية لي % % في غيبتي بلسان غير منسجن % % 45(@)(@@) % أستغفر الله من ما لست أعرفه % % من سوء ظن أتى بي من ذوي الضغن % % 46(@)(@@) % أستغفر الله مما كنت مؤتمنا % عليه بين الورى أو غير مؤتمن % % 47(@)(@@) % أستغفر الله من ظلمي لغيري في % % حق ومن أحد في الناس يظلمني % % 48(@)(@@) % أستغفر الله من بري لوالدتي % % ووالدي حيث لم أخدم ولم أعن % % 49(@)(@@) % أستغفر الله من تركي حقوقهما % % وطالما منهما غذيت باللبن % % 50(@)(@@) % أستغفر الله من ذكري سواى بما % % فيه وما ليس فيه غير متزن % % PageV01P1662 51(@)(@@) % أستغفر الله مما لاضرورة لي % % فيه ومن كل بنيان كذاك بني % % 52(@)(@@) % أستغفر الله من أرض نزلت بها % % ومجلس قد غدا بالناس يجمعني % % 53(@)(@@) % أستغفر الله من تقض العهود ومن % % ترك الحدود ومن حيد عن السنن % % 54(@)(@@) % أستغفر الله من طبع طبعت به % % وحالة أنا فيها ضيق العطن % % 55(@)(@@) % أستغفر الله وحدي حيث كنت وفي % % وقت اجتماعي بمعزوز وممتهن % % 56(@)(@@) % أستغفر الله مما قد تخيل لي % % وما اتهمت به شخصا من الظنن % % 57(@)(@@) % أستغفر الله من ضعفي ومن مرضي % % ومن تقلب أحوالي على المحن % % 58(@)(@@) % أستغفر الله من وقت 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms334# النزاع ومن % % موتي وقبري ومن غسلي ومن كفني % % 59(@)(@@) % أستغفر الله من هول السؤال إذا % % أتى على مدرج القبر مندفن % % 60(@)(@@) % أستغفر الله من يوم القيامة والأم % % وات تحيا من الجدران واللبن % % PageV01P1663 61(@)(@@) % أستغفر الله من وقت الحساب ومن % % نصب الموازين حيث الجور لم يبن % % 62(@)(@@) % أستغفر الله علام الغيوب فلا % % شيء عليه خفى تحت الثري الدجن % % 63(@)(@@) % أستغفر للها رازق البرية لم % % ينس أمر قرويا كان أو مدني % % 64(@)(@@) % أستغفر الله ستار العيوب على % % كل امرئ بالردى والسوء منعجن % % 65(@)(@@) % أستغفر الله عون المستجير به % % على الشدائد ومن يرجوه لم يهن % % 66(@)(@@) % أستغفر الله ذخر السائلين له % % فضل يجود به ما عنه قط ثنى % % 67(@)(@@) % أستغفر للها ذا العرش المجيد وذا ال % % ركن الشديد لمستجد ومرتكن % % 68(@)(@@) % أستغفر الله ذا الفضل العميم وذا ال % % عدل القويم وذا الإحسان والمنن % % 69(@)(@@) % أستغفر الله نور الكائنات ومن % % أتى الرسول لنا عنه ولم يمن % % 70(@)(@@) % أستغفر الله جل الله ليس له % % حد يقول لشيء أن أراد كن % % PageV01P1664 71(@)(@@) % أستغفر الله عز الله قد خضعتأستغفر الله كم من أشعث بهدى حظي وكم حسن لم يرضه بسن % لقهره أولياء الشام واليمنسقط بيت ص % % 72(@)(@@) % أستغفر الله كم عزت به أمم % % فكان ناصرهم في الحادث الدجن % % 73(@)(@@) % أستغفر الله كم خرت لسطوته % % أولوا العناد من الباغين للذقن % % 74(@)(@@) % أستغفر الله كم أردى الطغاة وكم % % أباد قوما بحد الأسمر اللدن % % 75(@)(@@) % أستغفر الله كم أوهى كعنترة % % في سالف الدهر أو سيف بن ذي يزن % % 76(@)(@@) % أستغفر الله كم أفنى جبابرة % % تمردت وعتت تقوى به وتنى % % 77(@)(@@) % أستغفر الله كم غاو أضل وكم % % عقل بهيبته في العجز مرتهن % % 78(@)(@@) % أستغفر الله تعداد الرمال % % وذرات الوجود وقطر الوابل الهتن % % 79(@)(@@) % أستغفر الله تعداد النبات وأو % % راق الغصون وزهر بالرياض سني % % 80(@)(@@) % أستغفر الله تعداد الطيور وما % % في البر من حجر البحر من سفن % % PageV01P1665 81(@)(@@) % أستغفر الله تعداد العقائد من % % إيمان حق وكفر باطل وهن % % 82(@)(@@) % أستغفر الله تعداد الهوام وتع % % داد الدواب وما ينقاد بالرسن % % 83(@)(@@) % أستغفر الله تعداد التراب وما % % في الأرض من قلل الأجبال والقنن % % 84(@)(@@) % أستغفر الله تعداد الحروف بدت % % في 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms335# الرقم والنطق بالأقلام واللسن % % 85(@)(@@) % أستغفر الله عد الحب جملته % % وما أتى من دقيق منه منطحن % % 86(@)(@@) % أستغفر الله عد النمل حيث سرى % % وقر والوحش من فرد ومقترن % % 87(@)(@@) % أستغفر الله عد المستبد به % % في العلم خالقنا من كل مستكن % % 88(@)(@@) % ثم الصلاة توالت والسلام نما % % على نبي الهدى من خص باللسن % % 89(@)(@@) % محمد خير خلق الله من نبتت % % عن طيب أصل له تفاحة الغصن % % 90(@)(@@) % وصاحب الحوض تسقى منه أمته % % في الطول ما بين عمان إلى عدن % % PageV01P1666 91(@)(@@) % وآله الغر والصحب ألأماجد من % % بفضلهم لم يزل روض الكمال جنى % % 92(@)(@@) % وعن أبي بكر الصديق مع عمر % % وبعد عثمان مولانا أبو الحسن % % 93(@)(@@) % والتابعين لهم بالخير سادتنا % % أولى التقى كاويس ذلك القرنى % % 94(@)(@@) % ما أنشدت هذه الأبيات في ملأ % % من نظم نابلسي الأصل عبد غني % % 95(@)(@@) % وما عفا ربنا ذوالحق عن أحد % % أتاه مستغفرا في السر والعلن % % PageV01P1667 البحر : - 1(@)(@@) % حبيبنا في بديع الحسن حيرنا % % بين الحياة وبين الموت خيرنا % % 2(@)(@@) % حكم علينا بالهجران غيرنا % % وبعد هذا بسوء الحال عيرنا % % PageV01P1668 البحر : - 1(@)(@@) % إن الخريف هو الربيع الثاني % % ونسيمه هو للغصون الثاني % % 2(@)(@@) % يثني الغصون مجردا أثوابها % % قصد العناق لغصنها العريان % % 3(@)(@@) % فانهض إلى المرح الشبيبة قبل أن % % يأتي المشيب بحلة الأحزان % % 4(@)(@@) % واشرب كؤوس العلم من يد فاضل % % شيخ يريك حقيقة الإيمان % % 5(@)(@@) % واشطح على الناي الرخيم فإنك % % الناي الرخيم بكف فرد داني % % 6(@)(@@) % والروح فيك ونفخها أنفاسه % % بالعقل مطربة على ميزان % % 7(@)(@@) % هذا هو الشرف الرفيع أتاك أن % % ظهرت لديك حقائق العرفان % % PageV01P1669 البحر : - 1(@)(@@) % ادخلوا في تصرف الرحمن % % واخرجوا عن تصرف نفساني % % 2(@)(@@) % أيها الناس إن هذا غرور % % صادر من وساوس الشيطان % % 3(@)(@@) % ما سمعتم بان ربي محيط % % بجميع الأشياء أنس وجان % % 4(@)(@@) % وهو الله في سماء وأرض % % لا بمعنى الحلول يا إخواتي % % 5(@)(@@) % بل هو الله لا سواه وكل % % هالك في وجوده الحق فاني % % 6(@)(@@) % ليس إلا المخلوق والخالق الرب % % وما ثم ثالت في العيان % % 7(@)(@@) % ليس شيء سواهما ثالث في % % خطرات العقول والأذهان % % 8(@)(@@) % خالق ربنا الأماكن طرا % % وعليه استحال كل مكان % % 9(@)(@@) % وكذاك الأزمان خالقها الله % % عليه استحال كل زمان % % 10(@)(@@) % وهو الله خالق كل شيء % % واحد 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms336# ماله على القطع ثاني % % PageV01P1670 11(@)(@@) % يتجلى بفعله فنراه % % ظاهرا باطنا بعين العيان % % 12(@)(@@) % معنا لا يغيب عنا لانا % % فعله وهو فاعل متداني % % 13(@)(@@) % وإلينا بنا قريب بعيد % % غير أنا لم ندره وهو داني % % PageV01P1671 البحر : - 1(@)(@@) % مراكب العشق قد أرست على المينا % % وأنت فضه زغل ما تقبل المينا % % 2(@)(@@) % أكثرت يا أنت تقليبا وتلوينا % % ساروا الحبائب وعنهم أنت تلوينا % % PageV01P1672 البحر : - 1(@)(@@) % صدقت عباد الله أسماؤه الحسنى % % تجلى بهم كالشمس في القمر الأسنى % % 2(@)(@@) % ثوابت أعيان بلا جعل جاعل % % قديمة عهد لا وجود لها يفنى % % 3(@)(@@) % وهاتيك معلومات علم الهنا % % به كاشف عنها قديما كما قلنا % % 4(@)(@@) % مرتبة أعيانها هكذا على % % نظام تراه في ثلاث وفي مثنى % % 5(@)(@@) % ونور التجلي من قديم يعمها % % على حسب الترتيب فيهن والمبنى % % 6(@)(@@) % وذاك وجود مطلق متوجه % % عليها يسمى الوجه أوجد أو أفنى % % 7(@)(@@) % فيظهر الترتيب من علمه الورى % % وتنكشف الأشياء شأنا به شأنا % % 8(@)(@@) % ومال الكل إلا حادث عندنا به % % قديم عديم عنده قط ما كنا % % 9(@)(@@) % وما ظاهر إلا الوجود بكلهم % % مقام يسمى قاب قوسين أو أدنى % % 10(@)(@@) % ألا نحن أهل الله ما بيننا انتفت % % إضافة أهل بالفنا هكذا أنا % % PageV01P1673 11(@)(@@) % ورثنا رسول الله علما محققا % % لتنزيل قرآن لدينا بنا منا % % 12(@)(@@) % ألا أن أهل الجنة الغافلون أن % % على الصدق في الإيمان دانوا كما دنا % % 13(@)(@@) % وفي شغل عن ربهم أهل جنة % % كما الله في القرآن أسمعه الأذنا % % 14(@)(@@) % وهم يتقون الله مع جهلهم بهفخذ لب هذا الأمر واترك قشوره لقوم به هم قانعون وجنبنا % % إذا جانبوا التأويل والمذهب الأدنى سقط بيت ص % % 15(@)(@@) % ولا تحتفل بالتابعين عقولهم % % ودعهم يقولوا ما يقولونه ظنا % % 16(@)(@@) % كما أنكروا توحيدنا بجهالة % % وصاروا علوم الله ينفونها عنا % % 17(@)(@@) % ونحن ملأنا الكون علما بربنا % % فلا منشد لا بأياتنا غنى % % 18(@)(@@) % وقد جاء في القرآن عن مثلهم فلا % % نقيم لهم يوم القيامة أي وزنا % % 19(@)(@@) % وحي على ما قلته لك يا فتى % % تجد علم أهل الله والمورد إلا هني % % 20(@)(@@) % وحقق معاني ما ذكرت وقل به % % وإلا فسلم واترك اللفظ والمعنى % % PageV01P1674 21(@)(@@) % وإياك إياك الجحود فإنه % % هو الكفر عند الله في حكمه الأسنى % % 22(@)(@@) % وإن كان في 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms337# الدنيا نسميه مسلما % % لما أنه بالشرع قد دخل الحصنا % % 23(@)(@@) % تمسك بأيات الكتاب فإنها % % هي الحبل حبل الله والظهر والبطنا % % 24(@)(@@) % وقل بعد هذا الله ألله لا سوى % % بذات وأوصاف وأسمائه الحسنى % % 25(@)(@@) % ستذكر يوما ما أقول فلا تضع % % زمانك فيما ليس يعنيك واتبعنا % % PageV01P1675 البحر : - 1(@)(@@) % إنني كن وإنني فيكون % % واحد وهو ظاهر بشئون % % 2(@)(@@) % كن وجودا وغيره عدم % % عنه كنى بقوله فيكون % % 3(@)(@@) % وجهه كن وهالك أبدا % % ما سواه فحقق المضمون % % 4(@)(@@) % واشهد لحقا في سواه به % % وهو غيب عن كل ما يعنون % % 5(@)(@@) % أمره واحد به كثرت % % صور الخلق وهي ذات فنون % % 6(@)(@@) % فاجمع الكل بالشهود وإن % % شئت فرق ولا تكن مفتون % % 7(@)(@@) % قل بطون له الظهور بنا % % وظهور لنا بذاك بطون % % 8(@)(@@) % أن تكن فينا فقل هو لا % % غيره في كتابه المكنون % % 9(@)(@@) % ربنا الله لا سواه هنا % % وهو عين قديمة وعيون % % 10(@)(@@) % حادثات به له ظهرت % % وهو حق وكلهن ظنون % % PageV01P1676 11(@)(@@) % فاعقل الشان وهو نفسك مع % % كل شيء فليس ذاك جنون % % 12(@)(@@) % وامنح الصادقين عملك لا % % تخف شيئا فتمنع الماعون % % 13(@)(@@) % كل من يكتم الذي هو في % % محكم الذكر إنه ملعون % % PageV01P1677 البحر : - 1(@)(@@) % أنا العدم وبربي صرت كن فيكون % % وجوده مثبت نفي وإني دون % % 2(@)(@@) % ولا حلول كما أهل الحجى يعنون % % ولا اتحاد كما قد ألبس الملعون % % PageV01P1678 البحر : - 1(@)(@@) % إني أنا وكذا أنتم بكن فيكون % % لقد ظهرنا جميعا فافهموا المضمون % % 2(@)(@@) % وجوده في تقادير العدم مكنون % % فميزوا بين من يعلو ومن هو دون % % PageV01P1679 البحر : - 1(@)(@@) % تبارك الله كل الخلق كن فيكون % % وجود حق بتقدير العدم معجون % % 2(@)(@@) % ما حل ما اتحد الخالق بهذا الدون % % عدم يخالط وجودا بئس ما يعنون % % PageV01P1680 البحر : - 1(@)(@@) % يا شرفي بأنه يعلمني % % وإنه في الغيب بي كلمني % % 2(@)(@@) % وقال لي كن وأنا أسمعه % % وإنما بلطفه أسمعني % % 3(@)(@@) % وها أنا محقق لكل ذا % % فإنه بعدمي حققني % % 4(@)(@@) % يا شرفي يا شرفي يا شرفي % % الله ربي الحق قد شرفني % % 5(@)(@@) % فها أنا في علمه منعدم % % وفي كلامه كذا أطلعني % % 6(@)(@@) % حسبي بأني علمه المحيط بي % % وإنني كلامه الغض الجني % % 7(@)(@@) % وهو الوجود الحق ليس صورة % % فيه له ولست بالتمكن % % 8(@)(@@) % وليس فيه غيره من 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms338# زمن % % جيمع ما منه بدا في الزمن % % 9(@)(@@) % ولا هو الله أنا حاشاي أن % % أقول ذا في السر أو في العلن % % 10(@)(@@) % لأنني عندي أنا وعندكم % % وعنده لا شيء عال ودنى % % PageV01P1681 11(@)(@@) % الله ربي لا سواه عنده % % لا عندنا فافهمه فهم الفطن % % 12(@)(@@) % من أجل ذا كلامه أنزله % % بعلمه لمن بهذا يعتني % % 13(@)(@@) % وكل من يعرف ما قد قلته % % فإنه مثلي على التيقن % % 14(@)(@@) % ومن يكن يجهل ذا فإنه % % لا يعرف الله ولا عبد الغني % % PageV01P1682 البحر : - 1(@)(@@) % صورة نأ نظرتها كلفتني % % وإذا لم أنظر إليها شرفتني % % 2(@)(@@) % شرفتني بكل أمر ونهي % % أمرتني به وما قد نهتني % % 3(@)(@@) % فأنا طائع ولست بعاص % % هكذا دائما كما خلقتني % % 4(@)(@@) % محض فضل منها علي وحفظ % % لي بلا كلفة لها صورتني % % 5(@)(@@) % ورجوعي لصورتي في شهودي % % مقتها لي بكلفتي والتعني % % 6(@)(@@) % أنا لا أستطيع شيئا ولكن % % بادعائي لصورتي مقتتني % % 7(@)(@@) % كن لاب أنت أن أردت ارتياحا % % وقبولا منها لنيل التمني % % 8(@)(@@) % وتوقف ولا تقف عند شيء % % وتأمل وانقل حديثك عني % % 9(@)(@@) % يا وجودي ويا وجود البرايا % % كلهم لا أقول إنك إني % % 10(@)(@@) % أنت فرد محقق ليس يخفى % % وأنا الوهم ظاهر بالتثني % % PageV01P1683 11(@)(@@) % فاعف عني مما جنيت بجهل % % قبل أن أدرك الردى فاعف عني % % PageV01P1684 البحر : - 1(@)(@@) % يا أهل أسفل سافلين % % يا شر قوم غافلين % % 2(@)(@@) % أنتم شخوص سفاهة % % ولذا نراكم منكرين % % 3(@)(@@) % لمتى الجهالة بينكم % % بوقوعكم في العارفين % % 4(@)(@@) % قال أخسأؤا فيها فما % % أنتم من المتكلمين % % 5(@)(@@) % أنتم شخوص ألقيت % % فيكم صفات اللاعبين % % 6(@)(@@) % وتفرقت أبصاركم % % عن رؤية الحق المبين % % 7(@)(@@) % وفسادكم هو موقع % % لقلوبكم في الصالحين % % 8(@)(@@) % سترون ما أنتم به % % لذوي الهدى متلبسين % % 9(@)(@@) % والظاهر الإيمان في % % ه تقية للسامعين % % 10(@)(@@) % وغدا إذا متم بدا % % ما اليوم كنتم جاحدين % % PageV01P1685 11(@)(@@) % والله إن لم تسلموا % % لحقائق الدين المتين % % 12(@)(@@) % دين النبي محمد % % طه الرسول لنا الأمين % % 13(@)(@@) % لرأيتم السيف الذي % % بالحق يقطع للوتين % % PageV01P1686 البحر : - 1(@)(@@) % فر إبليس عن هدى العرفان % % حين قيل اسجدوا وآدم داني % % 2(@)(@@) % فتجلى به الإله وفعل % % هو بالله ظاهر الحدثان % % 3(@)(@@) % ثم إبليس ضل عنه وفيه % % حسد قام واعترته الأماني % % 4(@)(@@) % كان في القلب منه جهل وكفر % % بالإله المهيمن الرحمن % % 5(@)(@@) % فبدا الله آدما بالتحلي % % وهو 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms339# الحق ليس للحق ثاني % % 6(@)(@@) % وتبدى علم التجلي وما كا % % ن وعلم التنزيه كان معاني % % 7(@)(@@) % ثم إن الأملاك قد علموا من % % آدم علم ذات التجلي المصان % % 8(@)(@@) % ولا بليس علم تنزيه ربي % % ماله في علم التجلي يدان % % 9(@)(@@) % حيث جاء اسجدوا لآدم حتى % % سجدوا دونه لجهل يعانى % % 10(@)(@@) % ما اسجدوا قال ربنا أي لمخلو % % ق وحاشا فإن دلك فاني % % PageV01P1687 11(@)(@@) % إنما الله ظاهر متجلي % % كان في آدم العظيم الشان % % 12(@)(@@) % وهو الله لا سواه ولكن % % ظاهر في أفعاله للعيان % % 13(@)(@@) % وهو غيب ولا تغير للغي % % ب سوى بالظهور في الإمكان % % 14(@)(@@) % حاش لله أن أملاك ربي % % سجدوا للمخلوق في الأكوان % % 15(@)(@@) % هم أولوا العصمة التي هي فيهم % % كلهم مع تحقق وبيان % % 16(@)(@@) % ومحال أمر الإله بكفر % % وضلال وزائد الطغيان % % 17(@)(@@) % إنما الجاهل الذي ليس يدري % % ظن سوءا بمنزل القرآن % % 18(@)(@@) % فأتاه كفر بما قال لما % % صبغته عقيدة الشيطان % % 19(@)(@@) % لا تقل كان قبله آدم في % % أمر ربي مقالة الحيران % % 20(@)(@@) % أن هذا مثل التجلي لموسى % % كان بالنار في نداء الأمان % % PageV01P1688 21(@)(@@) % وإذا كان قبله فتجلى % % هو أيضا في مذهب العرفان % % 22(@)(@@) % فخذ الأمر بالعموم وصرح % % بالتجلي لله في كل شان % % PageV01P1689 البحر : - 1(@)(@@) % من شدة القرب كان البعد للإنسان % % لأن هذه عليه يغلب النسيان % % 2(@)(@@) % فلو تذكر نزل في ساحة الإحسان % % وكان بالله ناطق في الورى ملسان % % PageV01P1690 البحر : - 1(@)(@@) % تمنيت لي عبدا ثمانون عمره % % لأعتقه لما بلغت الثمانينا % % 2(@)(@@) % فماوجدوا في الناس من عمره كذا % % ولم يك معتوقا فحيرتهم فينا % % 3(@)(@@) % وقالوا إله الخلق أكرم معتق % % لعبد له في العمر شيء وتسعونا % % 4(@)(@@) % فماذا تظن الله يفعل بعد ذا % % بعبد رقيق يخدم الشرع والدنيا % % 5(@)(@@) % فأفرحني ظني به إنه الذي % % من النار في يوم القيامة ينجينا % % PageV01P1691 البحر : - 1(@)(@@) % يا نافخ الناي هذا النفخ عمن كان % % عن نفسه أم عن النافخ عظيم الشان % % 2(@)(@@) % والله افخن ترى أم أنت هذا الآن % % كالبرق يملع ويفنى أيها الإنسان % % PageV01P1692 البحر : - 1(@)(@@) % لمتى أنت في الضلال المبين % % سلم الأمر واعتصم باليقين % % 2(@)(@@) % يا ابن يومين لا تكن في جدال % % أنت كالبرق نشؤ حين فحين % % 3(@)(@@) % ربنا الله وحده يتجلى % % عندنا بالتقبيح والتحسين % % 4(@)(@@) % قال كن 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms340# للورى فكانوا جميعا % % وهو أمر مرتب التعيين % % 5(@)(@@) % حضرة بالجلال تبدو وتخفى % % ظهرت بالجمال للتبيين % % 6(@)(@@) % فبدا كل أحور الطرف أحوى % % يتجلى بوجه حور عين % % 7(@)(@@) % إن تثنى فغصن بان رطيب % % قابض كل مهجة باليمين % % 8(@)(@@) % وهو لاشك وصف ولدان حور % % حجبت بالجلال عن كل عين % % 9(@)(@@) % دار دنيا ودار جنة خلد % % واحد عنا عارف مستكين % % 10(@)(@@) % وهي عند الجهول نار تلظى % % سوف يدري بذاك من غير مين % % PageV01P1693 11(@)(@@) % فاكشفوا يا قلوب عمن رأيتم % % ظاهرا بالوجود فالدين ديني % % 12(@)(@@) % حجبتكم نفوسكم فجهلتم % % أنه النور نور حق مبين % % 13(@)(@@) % ونفتكم عن الهدى شهوات % % من حلال ومن حرام مهين % % 14(@)(@@) % وهواكم هوى الجهول خبيث % % لم يطلب باعتبار ما في الكمين % % 15(@)(@@) % عهد ربي ألست خنتم جهارا % % ما اتبعتم صراط طه الأمين % % 16(@)(@@) % وكتاب الأبرار يعلو علوا % % وكتاب الفجارفي سجين % % 17(@)(@@) % جعلوا رزقهم من الضعف إن قد % % كذبوا بالدين القوي المتين % % PageV01P1694 البحر : - 1(@)(@@) % ريح التجلي وريح المصطفى ريحان % % هما لنا ريح ورد فاح أو ريحان % % 2(@)(@@) % والله والله يا عبد الهدى ريحان % % أنت المقرب وأنت الروح والريحان % % PageV01P1695 البحر : - 1(@)(@@) % لا تكن إلا لمولاك أنا % % وأنا أنت كما أنت أنا % % 2(@)(@@) % أنت لا أنت أنا لست أنا % % ما خرجنا نحن عن محض الفنا % % 3(@)(@@) % وهو وهو الله لا غير فكن % % هو لا أنت تدلي ودنا % % 4(@)(@@) % هو حق وسواه باطل % % جاء في القرآن هذا علنا % % 5(@)(@@) % وبه السنة أيضا وردت % % فتمسك بهما تلق المنى % % 6(@)(@@) % باطل أي عدم قدره % % فهو تقدير هناك وهنا % % 7(@)(@@) % لا تقل شيء سوه أبدا % % منه يأتيك سرور وهنا % % 8(@)(@@) % ما مع الله وجود للسوى % % والسوى حيث التجلي وهنا % % 9(@)(@@) % مكن الممكن من أمكانه % % لا تخالطه بواجب الغنى % % 10(@)(@@) % وتحققه تجده واحدا % % ليس مخلوطا بمعدوم لنا % % PageV01P1696 11(@)(@@) % أنا المعدوم مخلوق له % % لم يزل في العلم أمر ممكنا % % PageV01P1697 البحر : - 1(@)(@@) % لا تخلط الواجب بالممكن % % وكن بتمييزهما معتنى % % 2(@)(@@) % فالواجب الحق وجود وما % % سواه غير العدم الممكن % % 3(@)(@@) % لم يتغير واحد منهما % % عما عليه كان قد ما بني % % 4(@)(@@) % هذا الوجود الحق باد على % % كل التقادير بها يعتني % % 5(@)(@@) % بعلمه قامت سمواته % % والأرض حتى كل شيء فني % % 6(@)(@@) % وهو كثير في ظهوراته % % وواحد في 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms341# ذاته الأبين % % 7(@)(@@) % مكون الذرات يأتي بها % % وجوده بالقلم المقتني % % 8(@)(@@) % يركب الأشياء منها على % % تصويرها من فاضل أو دني % % 9(@)(@@) % حتى تراه ظاهرا بالذي % % ركبه ينطق بالألسن % % 10(@)(@@) % تراه في صورة ناعورة % % وتارة في شكل روض جنى % % PageV01P1698 11(@)(@@) % وتارة في شكل بدر على % % غصن مليح أهيف ينثني % % 12(@)(@@) % وهو الذي قد جل في نفسه % % عن صورة التصوير للأعين % % 13(@)(@@) % والجاهل المنكر في غيه % % وللذي يعرف عيش هني % % 14(@)(@@) % تبارك الله الغني الذي % % يعرفه بالحس عبد الغني % % PageV01P1699 البحر : - 1(@)(@@) % يا جميل الوجه الذي هو داني % % لعيون الورى بلا كتمان % % 2(@)(@@) % لكن الآن في العيون غبار % % ثائر بالشخوص والأكوان % % 3(@)(@@) % والمعاني التي تلوح وتخفى % % من جميع الأنواع والألوان % % 4(@)(@@) % والذي ينظر الوجود قليل % % من قليل في سائر الأزمان % % 5(@)(@@) % أنت نور أيا وجود علينا % % تتجلى في عيننا والعيان % % 6(@)(@@) % والمساكين نحن في غفلات % % عنك يا ذا الحسنى وذا الإحسان % % 7(@)(@@) % إن عينا تراك في الدهر يوما % % تلك عين من العمى في أمان % % PageV01P1700 البحر : - 1(@)(@@) % ظاهر لا يكون أظهر منه % % غير أن الأكوان تحجب عنه % % 2(@)(@@) % يتجلى في كل شيء ولكن % % ماله في بصائر القوم كنه % % PageV01P1701 البحر : - 1(@)(@@) % زر بنات القسوس في ديرهنه % % وارتشف خمرهن من يدهنه % % 2(@)(@@) % وادخل الحان حان وصلك للغي % % د اللواتي اعربن في لحنهنه % % 3(@)(@@) % هن أصل الهوى وما هم يوما % % ذوا الهوى في الأنام الأبهنه % % 4(@)(@@) % كل هيفاء بالتبسم تحيى % % وتيمت المشوق وجدا وحنه % % 5(@)(@@) % إن أشارت إلى الكيان أبانت % % عنه أولا فإنه في أكنه % % 6(@)(@@) % وإذا ما دعت أجنبا حيارى % % بنفوس في حبها مطمئنة % % 7(@)(@@) % فق نديمي من نوم عقلك واركع % % لغواني الوجود واسجد لهنه % % 8(@)(@@) % وتأمل ما أنت فيه بعين % % ربطتها ملاحها بالأعنه % % 9(@)(@@) % واستمع رنة المزاهر تبدو % % من خلال الستور أكمل رنه % % 10(@)(@@) % هذه هذه سعادة قوم % % عملهم في الصدور لم يتسنه % % PageV01P1702 البحر : - 1(@)(@@) % كم ليلة بت في بستان في لوان % % ملون البسط فيه والهوى لوان % % 2(@)(@@) % والله لي حافظ ينفي الردى صوان % % وزند عشقي قدح قلبي له صوان % % PageV01P1703 البحر : - 1(@)(@@) % شهدت القديم الحق بالحادث الفاني % % وصادفني صبا غريبا فالضاني % % 2(@)(@@) % له النعمة العظمى على كل حادث % % وألف من الإكرام فينا وآلفان % % 3(@)(@@) % وجود قديم ظاهر 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms342# لعقولناتنزه عن تنزيهنا وتقدست معارفه فيالخلق عن كل عرفان % وللحس فرد واحد ماله ثانيسقط بيت ص % % 4(@)(@@) % تغطى عليه الغافلون بوهمهم % % فليس لهم منه سوى محض حرمان % % 5(@)(@@) % وقد أنكروا علم الإله الذي أتى % % إليهم من القوم الأولى أهل إيقان % % 6(@)(@@) % وذلك من جهل ولم يعذروا به % % وكيف يصح العذر في شرع رحمان % % 7(@)(@@) % هو الحق وجه كله ماله قفا % % إلى كل شيء ناظر وله داني % % 8(@)(@@) % وقل كل شيء هالك غير وجهه % % كما جاء عنه القول في وحي قرآن % % 9(@)(@@) % له أزل الآزال في كل رتبة % % له أبد الآباد من غير أزمان % % 10(@)(@@) % يشار إليه بالمعاني جميعها % % وكل كلام كان من كل إنسان % % PageV01P1704 11(@)(@@) % وإن لم يكن علم بهذا لعالم % % وإن لم يقم وزن لهذا بميزان % % 12(@)(@@) % وكل معاني ذاته من ورا الورى % % فلا هو إلا هو وذلك إيماني % % PageV01P1705 البحر : - 1(@)(@@) % يا كامل العقل خذ بالنقل لك حلوان % % عندي إلى أن مرادك تجعله حلوان % % 2(@)(@@) % وحتى بغداد ذات القرب من حلوان % % حي لقطب بها وأحلى العنب حلوان % % PageV01P1706 البحر : - 1(@)(@@) % با أبا مسلم الفتى الخولاني % % أنت من نور حضرة الغيب داني % % 2(@)(@@) % والتجلي عليك سرا وجهرا % % من إله مهيمن رحمان % % 3(@)(@@) % كنت في الوقت كوكبا مستنيرا % % في سماء العلوم والعرفان % % 4(@)(@@) % كاشفا ظلمة القلوب بنور % % هو لله واضح البرهان % % 5(@)(@@) % وإليك الأمور في الغيب ألقت % % سرها بين أهل ذاك الزمان % % 6(@)(@@) % يا ابن علم بغيرتنا هي % % لا تصال بإشراف الأديان % % 7(@)(@@) % وارثا كنت علم خير نبي % هو طه محمد العدناني % % 8(@)(@@) % حلة قد لبستها منه لما % % كنت في الناس للكمال تعاني % % 9(@)(@@) % بك خولان فاخرت ما سواها % % وتسامت عزا على العربان % % 10(@)(@@) % يا أبا مسلم الرفيع مقاما % % يا سليل الهدى ونور العيان % % PageV01P1707 11(@)(@@) % لك ذرية بسرك قامت % % تقتفي منك مشرب الإيقان % % 12(@)(@@) % زادهم ربهم هدى واتباعا % % لمعاني هداك في كل آن % % 13(@)(@@) % خصك الله بالتحية مني % % ما تغنت حمائم الأغصان % % 14(@)(@@) % وشدا بالمديح عبد غني % % بك يرجو الحسنى مع الإحسان % % PageV01P1708 البحر : - 1(@)(@@) % يا مدعي للوجود أخطأت عين عين % % من أين لك هذه الدعوى ترى من أين % % 2(@)(@@) % أنت العدم في وجوده يا أسير البين % % وجود واحد أحد 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms343# يمكن يكون اثنين % % 3(@)(@@) % وقال من الدوبيت % % 4(@)(@@) % من عين وجوده ظهرنا من عين % % من أين لنا الوجود هذا من أين % % 5(@)(@@) % والواحد ربنا فقط لا ثاني % % في الكون فلا يصير بالكون اثنين % % 6(@)(@@) % وقال موشحا % % 7(@)(@@) % دور % % 8(@)(@@) % يا نور هذا التجلي % % بهرت حسي وعقلي % % 9(@)(@@) % وأنت قولي وفعلي % % وأنت بعضي وكلي % % 10(@)(@@) % حيرني هذا الظاهر % % نور الأكوان % % PageV01P1709 11(@)(@@) % دور % % 12(@)(@@) % بدا الجمال الحقيقي % % عليه مزقت زيقي % % 13(@)(@@) % فلا تقف في طريقي % % يا عاذلي عذلي % % 14(@)(@@) % حيرني هذا الظاهر % % نور الأكوان % % 15(@)(@@) % دور % % 16(@)(@@) % بالله يا نور عيني % % من حال بينك وبيني % % 17(@)(@@) % وأنت جمعي وإيني % % في كل عقد وحل % 18(@)(@@) % حيرني هذا الظاهر % % نور الأكوان % % 19(@)(@@) % دور % % 20(@)(@@) % يا طالما كنت داني % % في علمه بالمعاني % % PageV01P1710 21(@)(@@) % واليوم مال جفاني % % قاسيت بعدي وذلي % % 22(@)(@@) % حيرني هذا الظاهر % % نور الأكوان % % 23(@)(@@) % دور % % 24(@)(@@) % جمال وجه الحبائب % % قلبي الشجي منه هائب % % 25(@)(@@) % وإن إحدى العجائب % % رجوع أيام وصلي % % 26(@)(@@) % حيرني هذا الظاهر % % نور الأكوان % % 27(@)(@@) % دور % % 28(@)(@@) % صلى إلهي وسلم % % على نبي تكلم % % 29(@)(@@) % بالحق لما تعلم % % من ربه حكم فصل % % 30(@)(@@) % حيرني هذا الظاهر % % نور الأكوان % % PageV01P1711 31(@)(@@) % دور % % 32(@)(@@) % عبد الغني قام يرجو % % علما به اليوم ينجو % % 33(@)(@@) % له من الله نهج % % على المقام الأجل % % 34(@)(@@) % حيرني هذا الظاهر % % نور الأكوان % % PageV01P1712 البحر : - 1(@)(@@) % جمال وجه الحبيب أشرق % % ساجي الجفون % % 2(@)(@@) % والمبسم العذب منه أبرق % % كاس المنون % % 3(@)(@@) % دور % % 4(@)(@@) % يا منيتي زدت في مطالي % % كم ذا الجفا % % 5(@)(@@) % فالجسم مني كما الخيال % % كذا يكون % % 6(@)(@@) % دور % % 7(@)(@@) % عندي غرام إلى غزالي % % بلا حساب % % 8(@)(@@) % وصار شوقي علي والي % % صعب يهون % % 9(@)(@@) % دور % % 10(@)(@@) % بالسعد يا حق جد لباطل % % كفى بعاد % % PageV01P1713 11(@)(@@) % فإن صبري عليك عاطل % % يا ذا المصون % % 12(@)(@@) % دور % % 13(@)(@@) % صلى إله الورى وسلم % % على الرسول % % 14(@)(@@) % عبد الغني بالثنا تكلم % % والقدر دون % % PageV01P1714 البحر : - 1(@)(@@) % مفرد الحسن تبدى % % بهلال فوق غصن البان % % 2(@)(@@) % يتثنى زادني أشجان % % 3(@)(@@) % دور % % 4(@)(@@) % راح يرنو بعيون % % فاضحات أعين الغزلان % % 5(@)(@@) % قائلات ألا مان الأمان % % 6(@)(@@) % دور % % 7(@)(@@) % وهو روحي وهو جسمي % % لم يكن لي عنه من سلوان % % 8(@)(@@) % انظروا في الحان يا إخوان % % 9(@)(@@) % دور % % 10(@)(@@) % هذه الأكوان دلت % % إن هذا النور في الألوان % % PageV01P1715 11(@)(@@) % يتجلى دائم الأزمان % % 12(@)(@@) % دور % % 13(@)(@@) % وصلاة الله ربي % % للنبي رحمة الرحمن % % 14(@)(@@) % من عبيد للغنى ولهان % % PageV01P1716 البحر 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms344# : - 1(@)(@@) % هو العظيم الذي علا شانه % % وقام بالكفتين ميزانه % % 2(@)(@@) % وقد تثنت قدوده ورنت % % عيونه واستمال انسانه % % 3(@)(@@) % ولم يزل واحد وكثرته % % ذيول أثوابه وأردانه % % 4(@)(@@) % وكنت قرءانه بجمعي أنا % % بل أنا مني بالفرق فرقانه % % 5(@)(@@) % جلت عيون رأته في صور % % قام عليها بالحق برهانه % % 6(@)(@@) % وجل قلب درى بعزته % % يقينه ملؤه وإيمانه % % 7(@)(@@) % ملأت منه يدي وليس بها % % سواه إذا ما سواه ملآنه % % 8(@)(@@) % وماء حوض النبي راق لنا % % ونحن أكوابه وكيزانه % % 9(@)(@@) % تبارك الله حين صورني % % صورته في وهي إحسانه % % 10(@)(@@) % وانتظمت بالوجود سبحتنا % % في سلكه المستطيل سبحانه % % PageV01P1717 البحر : - 1(@)(@@) % هذه الكائنات أم هي حانه % % اسكرتنا كؤوسها الملآنة % % 2(@)(@@) % أم هو البرق برق نور التجلي % % خاطف كل من رأى لمعانه % % 3(@)(@@) % يا نديمي أعد علي وكرر % % ذكر من غاب في ستور الصيانة % % 4(@)(@@) % وجهه البدر لا بل الشمس حسنا % % لاعد منا طول المدى إحسانه % % 5(@)(@@) % سره دب في القلوب فهامت % % عندما شاهدت بها سريانه % % 6(@)(@@) % ويذوب المحب فيه ويفنى % % كلما لاح كاشفا أردانه % % 7(@)(@@) % واحد في القلوب وهو كثير % % في العيون اقتضى هداه الأبان % % 8(@)(@@) % عرفته به السعاة إليه % % بنفوس في حبه ولهانة % % 9(@)(@@) % ثم أفنت به النفوس وقامت % % بتجلي صفاته الفنانة % % 10(@)(@@) % لا تقل غيره فذا قول من لم % % يتحقق في غيره عرفانه % % PageV01P1718 11(@)(@@) % يختفي تارة ويظهر طورا % % كيفما شاء لم يزل ذاك شانه % % 12(@)(@@) % يا وحيد الوجود نحن حيارى % % فيك فارفق بعصبة حيرانه % % 13(@)(@@) % أينما اقبلوا رأوك جهارا % % والتقى من شهودهم والأمانة % % 14(@)(@@) % أهل صدق بسر سرك قاموا % % ولهم صولة به واستعانة % % 15(@)(@@) % كلما أشرق الوجود عليهم % % فيه غابوا فشاهدوا رحمانه % % 16(@)(@@) % حفظوا العهد منه يوم ألستم % % واستقاموا لا يعرفون الخيانة % % 17(@)(@@) % أمة أمت الفنا وترجت % % معه من بقائهم غفرانه % % 18(@)(@@) % هم تجليه وانكشاف سناه % % عنده يدخلون منه جنانه % % 19(@)(@@) % اسموا يوم فتح مكته إذ % % كسروا من نفوسهم صلبانه % % 20(@)(@@) % ههنا سر نشأة كل عبد % % ذاق منه لم يستطع كتمانه % % PageV01P1719 21(@)(@@) % وهو حق به تحقق كوني % % لا بسحر من السوى وكهانه % % 22(@)(@@) % وهو اضق لنا ونحن شهود % % عندنا الشرع لم يزل ترجمانه % % 23(@)(@@) % وعلى حضرة النبي نزلنا % % منه حتى بنا تلا قرآنه % % 24(@)(@@) % حضرة النور هي من حضرة النو % % ر 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms345# ونحن النور الذي قد أبانه % % 25(@)(@@) % إنني ظاهر به وخفي % وفؤادي محقق هيمانه % % 26(@)(@@) % كنت قرآنه ياجمال جمع % % وبتفصيل فرقه فرقانه % % 27(@)(@@) % ولهذا شهدت جمعا وفرقا % % ذاته والصفات فيه ديانه % % PageV01P1720 البحر : - 1(@)(@@) % إنما نحن ربنا في شؤونه % % ناظرات عيوننا بعيونه % % 2(@)(@@) % يتجلى بنا ونحن كواو % % اضمرت بين كاف أمر ونونه % % 3(@)(@@) % كم له في بطوننا من ظهور % % وظهور لنا به في بطونه % % 4(@)(@@) % يا لحي إذا بدا فيلاقي % % كل حي حياته في منونه % % 5(@)(@@) % وإذا لاح قادرا ومريدا % % بان تحريك عبده في سكونه % % 6(@)(@@) % حدثوني يا أمة العشق فيه % % عن محيا ليلى وعن مجنونه % % 7(@)(@@) % كل نفس مرهونة بدعاوي % % ذاته والصفات أسر ديونه % % 8(@)(@@) % صبغة الله في الشئون فخلوا % % عاشق الوجه حائرا في جنونه % % 9(@)(@@) % وصفوا لى إ صفاته فصفاتي % % لا أرها بأنها من دونه % % 10(@)(@@) % هي لي تارة به وله بي % % مثل نهر يدور في منجنونه % % PageV01P1721 11(@)(@@) % عدم كلنا وذاك وجود % % لكن الأمر ظاهر بفنونه % % 12(@)(@@) % والذي قام فيه بالنفس فان % % مضمحل يقينه في ظنونه % % 13(@)(@@) % وعليه تلبس الأمر حتى % % ليس يدري صوابه من لحونه % % 14(@)(@@) % هو ألا مضمون علم قديم % % فليجل بالوجود في مضمونه % % 15(@)(@@) % إنك الاعتبار منه فكن يا % % وردة كالدهان عين شؤونه % % 16(@)(@@) % لا تكن خارجا بنفسك عنه % % لا ولا داخلا به في حصونه % % 17(@)(@@) % أنت لا شيء وهو شيء عظيم % % فاشتغل بالوفا لفك رهونه % % PageV01P1722 البحر : - 1(@)(@@) % بلغوا الحي من عريب كنانة % % عن سلامي إن السلام أمانة % % 2(@)(@@) % وانشروا ما انطوى لهم في ثيابي % % من أمام قد عظم الله شأنه % % 3(@)(@@) % قلبه كاشف علوم التجلي % % وبها أفصح الإله لسانه % % 4(@)(@@) % يا داة ح المطي للحي قولوا % % عن فؤادي وبينوا هيمانه % % 5(@)(@@) % إن رقمتين لي قرب عهد % % تحت ظل الأراكة الفينانه % % 6(@)(@@) % حب سلمى على التباعد شرعي % % وعلى القرب ملتي والديانة % % 7(@)(@@) % كل وردي في حبها شم وردى % % وارتياحي تنشق الريحانة % % 8(@)(@@) % لي من الغيب في الشهادة سكر % % ومن الحق في الحقائق حانة % % 9(@)(@@) % عربي سرت عروبة سري % % في جليسي فلم أزل ترجمانه % % 10(@)(@@) % هذه نسبتي وهذا مقامي % % بث إنسان ناظري إنسانه % % PageV01P1723 البحر : - 1(@)(@@) % ماله عندك كنه % % فتحققه وكن هو % % 2(@)(@@) % أيها الغائب فيه % % لمتى تعرض عنه % % 3(@)(@@) % أنت غيب 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms346# وهو غيب % % لك تأتي أنت منه % % 4(@)(@@) % وتيقظ أيها الغا % % فل فق أنت لدنه % % 5(@)(@@) % للربوبية سر % فاحفظ السر وصنه % % 6(@)(@@) % وعليك العهد مأخو % % ذ من الرب اعرفنه % % 7(@)(@@) % وعز يزهو في ذا % % تك إياك تهنه % % 8(@)(@@) % عدم أنت ومولا % % ك وجود فاشهدنه % % 9(@)(@@) % زينة الله فخذها % % منه وأخرج لا تشنه % % 10(@)(@@) % وعلى نفسك من ين % % صح بالحق أعنه % % PageV01P1724 11(@)(@@) % وإذا آمنك المو % % دع سرا لا تخنه % % 12(@)(@@) % وارجع الأمر إليه % % ذاتك أمحقها فدنه % % 13(@)(@@) % شرعك الميزان فاعمل % % والذي تعمل زنه % % PageV01P1725 البحر : - 1(@)(@@) % جميع أفعال ربنا حسنة % % سيئة منك كانت أو حسنة % % 2(@)(@@) % والنفس منها الأفعال سيئة % % وتلك أفعال ربنا الحسنة % % 3(@)(@@) % وإنما الله عنك اغفلها % % حتى ادعتها ولم ترمننه % % 4(@)(@@) % فإنها سيئات ما عملوا % % بنية في القلوب مكتمنة % % 5(@)(@@) % ومن يبع نفسه لخالقه % % تكن له نفس ربه ثمنه % % PageV01P1726 البحر : - 1(@)(@@) % هذه كل ظاهر هو فيها % % 2(@)(@@) % وبها كل ناطق يعنيها % % 3(@)(@@) % فتأمل في نفس ذات تليها % % 4(@)(@@) % عطس الصبح في الدجى فاسقنيها % % خمرة تترك الحليم سفيها % % 5(@)(@@) % إنني كنت سابقا في ابتلاء % % 6(@)(@@) % من وجودي بغير علم اجتلاء % % 7(@)(@@) % وأنا اليوم صرت خمر اصطفاء % % 8(@)(@@) % لست أدري من رقة وصفاء % % هي في كأسها أم الكاس فيها % % PageV01P1727 البحر : - 1(@)(@@) % حسب الناس إنني أتسلى % % بسوي من سواه لست أراه % % 2(@)(@@) % عجبا لمن سواه وجود % % عندهم أين قولهم ألله % % PageV01P1728 البحر : - 1(@)(@@) % يا غافلون استفيقوا يا نيام الجاه % % وامحوا بما لم يزل ما لم يكن أواه % % 2(@)(@@) % وافنوا عن الفكر أن الفكر فيه تاه % % وما تشاؤن إلا أن يشاء الله % % PageV01P1729 البحر : - 1(@)(@@) % إن المولى في كل حال معنا % % لولاه لما نلنا الهدى لولاه % % 2(@)(@@) % ما الروح وما الجسم الذي في المغني % % ما النفس وما الأشكال والأشباه % % 3(@)(@@) % ما القرب وما أهل المقام إلا سنى % % ما البعد ومن بالجهل فيه تاهوا % % 4(@)(@@) % الكل إشارة وأنت المعنى % % يا من هو لا إله إلا الله % % 5(@)(@@) % دور % % 6(@)(@@) % قلبي يا رب حاء بالتوحيد % % يرجو منك القبول للأعمال % % 7(@)(@@) % والنطق على التسبيح والتحميد % % قد واظب في البكور والأصال % % 8(@)(@@) % فاغفر وارحم آباءنا والأبنا % % منا دعت القلوب والأفواه % % 9(@)(@@) % الكل إشارة وأنت المعنى % % يا من هو لا إله إلا الله % % 10(@)(@@) % دور % % PageV01P1730 11(@)(@@) % نور الأسماء لاح 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms347# في الأكوان % % فانظره به تراه لا بالنفس % % 12(@)(@@) % واترك عنك الوقوف مع ذا الفاني % % كم تصبح اللهو به كم تمسي % % 13(@)(@@) % العمر مضى وما ملكت الأدنى % % من زادك ما السوى وما معناه % % 14(@)(@@) % الكل إشارة وأنت المعنى % % يا من هو لا إله إلا الله % % 15(@)(@@) % دور % % 16(@)(@@) % لله على طول المدى ألطاف % % في الخلق بها قد حارت الأفكار % % 17(@)(@@) % والفضل هل والجود والأنصاف % % يدري هذا من عنده استبصار % % 18(@)(@@) % فاقنع بالله إنه قد أغنى % % عن ذاك وذا ودع لما تهواه % % 19(@)(@@) % الكل إشارة وأنت المعنى % % يا من هو لا إله إلا الله % % 20(@)(@@) % دور % % PageV01P1731 21(@)(@@) % رحمن العرش قد تجلى فينا % % بالصنع وبالإيجاد الإعدام % % 22(@)(@@) % والغفلة عنه كم أزالت دينا % % حتى أغوت من كثرة الآثام % % 23(@)(@@) % والفائز كل من تراه يفنى % % لا يقصد دنياه ولا أخراه % % 24(@)(@@) % الكل إشارة وأنت المعنى % % يا من هو لا إله إلا الله % % 25(@)(@@) % دور % % 26(@)(@@) % رحمن العرش قد تجلى فينا % % بالصنع وبالإيجاد والإعدام % % 27(@)(@@) % والغفلة عنه كما أزالت دينا % % حتى أغوت من كثرة الآثام % % 28(@)(@@) % والفائز كل من تراه يفنى % % لا يقصد دنياه ولا أخراه % % 29(@)(@@) % الكل إشارة وأنت المعنى % % يا من هو لا إله إلا الله % % 30(@)(@@) % دور % % PageV01P1732 31(@)(@@) % الحق هو الباطل وهو الظاهر % % فاعرض عمن سواه تحظى فيه % % 32(@)(@@) % فيالكون لقد بدا سناه باهر % % لم يخف سوى عن الذي يخفيه % % 33(@)(@@) % والليل مع النهار عنه أثنى % % والأرض مع السماء والأمواه % % 34(@)(@@) % الكل إشارة وأنت المعنى % % يا من هو لا إله إلا الله % % 35(@)(@@) % دور % % 36(@)(@@) % صل يا ربنا على المختار % % ذي المجد وذي الفخر وذي العلياء % % 37(@)(@@) % والآل مع الصحابة الأخيار % % أهل التقوى كواكب الهيجاء % % 38(@)(@@) % مع تابع ما قال لما أكني % % يوما عبد الغني عن مولاه % % 39(@)(@@) % الكل إشارة وأنت المعنى % % يا من هو لا إله إلا الله % % PageV01P1733 البحر : - 1(@)(@@) % مهجة ناظراك قد فتناها % % وبها أفرط الجوى فتناهى % % 2(@)(@@) % كلما قلت آه من فرط شوقي % % لك قال المقال مني آها % % 3(@)(@@) % يا بديع الجمال بالعشق منا % % قد شغلت القلوب والأفواها % % 4(@)(@@) % كل عين تراك من كل شيء % % فترى نفسها وأنت تراها % % 5(@)(@@) % والعمى عنك وصفها كشهود % % لك فالوصف داؤها ودواها % % 6(@)(@@) % هيه حادي المطي من نفس 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms348# صب % % قد تحفت أقدامها بوناها % % 7(@)(@@) % وسرى الركب وهي في أخريات % % خوفها الانقطاع عنهم يراها % % 8(@)(@@) % كلما جدت المسير أعيقت % % بأسارى أبصارهم أعماها % % 9(@)(@@) % أن وختت إيمانها أنكروها % % وإلى العقل يرجعون قواها % % 10(@)(@@) % عصبة اذهبوا الزمان التباسا % % من دواعي نفوسهم واشتباها % % PageV01P1734 11(@)(@@) % ربطتهم بقيدها شهوات % % فهم الهالكون مالا وجاها % % 12(@)(@@) % يحسبون الضلال بالنفس رشدا % % والتعامي يرونه الانتباها % % 13(@)(@@) % وبذات المليح ذات مليح % % كلما شئت كلمتي شفاها % % 14(@)(@@) % خيلت غيرها لقوم ضعاف % % ما اتقوها بها فظنوا سواها % % 15(@)(@@) % وهي تدنو لهم بهم فيفرو % % ن وهيهات يعرفون الإلها % % 16(@)(@@) % وسواها منها كرؤية وجه % % من بعيد عمر إذا الحس تاها % % 17(@)(@@) % واحد وهو في الظهور كثير % % يتجلى لنا فلا يتناهى % % 18(@)(@@) % صدر الكل عنه فهو لهذا % % عين كل والكل لي عنه فاها % % 19(@)(@@) % يا ابن قومي خذ القضية عني % % إن تكن مغرما بها أواها % % 20(@)(@@) % واطرح القشر عن كلامي وكل من % % لبه واشرب الجميع مياها % % PageV01P1735 21(@)(@@) % والتفت تنظر الوجود سرابا % % لا شرابا فاحذر به تتباهى % % 22(@)(@@) % واجتنب عنه لا ترى أمثالا % % فيه قد خيلت ولا أشباها % % 23(@)(@@) % واقتنع منه بالذي هو سر % فيه لا فيه لا تكن تباها % % PageV01P1736 البحر : - 1(@)(@@) % لا يرى الفقه الإلهي % % في الورى غير فقيه % % 2(@)(@@) % وسفيه كل من قا % % س كريما بسفيه % % 3(@)(@@) % من رأى في الغير عيبا % % كان ذاك العيب فيه % % PageV01P1737 البحر : - 1(@)(@@) % نحن معاني الوجود فيه % % ونحن عنه كنطق فيه % % 2(@)(@@) % وماله عز من مثيل % % وماله جل من شبيه % % 3(@)(@@) % إذا تجلى لنا محانا % % بنوره الساطع النزيه % % 4(@)(@@) % وإن رأيناه لا نراه % % إذ نحن في رتبة تليه % % 5(@)(@@) % وعلمنا ليس عند شخص % % محدث لا ولا فقيه % % 6(@)(@@) % ولا كبير ولا صغير % % ولا حليم ولا سفيه % % 7(@)(@@) % سوى فتى صار جد جد % له وأضحى أبا أبيه % % 8(@)(@@) % واصبح الجسم منه روحا % % بسره الله يجتبيه % % 9(@)(@@) % وصار فردا بحب فرد % % يجل عنه وعن ذويه % % 10(@)(@@) % ولم يدع منزلا رفيعا % % في الله إلا ويرتقيه % % PageV01P1738 11(@)(@@) % وقد تعرى عن الأماني % % وكل ما كان يرتجيه % % 12(@)(@@) % وذاب حتى انمحت رسوم % % له ولاح الخفي فيه % % 13(@)(@@) % نصحتك اشرب كؤوس عشقي % % وخل ما كنت تتقيه % % 14(@)(@@) % وكن فهيما وع كلامي % % وعد عن كل ما تعيه % % 15(@)(@@) % نحن الذين انتهت 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms349# إلينا % % مقاصد الفاضل النبيه % % 16(@)(@@) % ونكشف الحق في المعاني % % وفي المباني التي تقيه % % 17(@)(@@) % نراه في كل ما كرهنا % % وكل ما نحن نشتهيه % % 18(@)(@@) % وليس بالحال يدري منا % % سوى الذي صار يقتفيه % % 19(@)(@@) % وزادنا ربنا علوما % % بنور وجه له وجيه % % PageV01P1739 البحر : - 1(@)(@@) % لو أن من يطلب مولاه % % مثل الذي يطلب دنياه % % 2(@)(@@) % لكان يلقاه لا شبهة % % في كل شيء كان يلقاه % % 3(@)(@@) % من يطلب الدنيا ترى قلبه % % مستغرقا فيها وأحشاه % % 4(@)(@@) % وعقله قد أسرته كما % % بذكرها قد أشغلت فاه % % 5(@)(@@) % يحب من يوهمه بذلها % % وإن يكن أبغض أعداه % % 6(@)(@@) % ويركب الأهوال في نيلها % % أهوال دنياه وعقباه % % 7(@)(@@) % وقلبه في حبها صادق % % يطلب منها ما تمناه % % 8(@)(@@) % وليته في ربه هكذا % % والناس أشكال وأشباه % % 9(@)(@@) % لو أخلصوا في الله أخلاصهم % % في غيره ناجاهم الله % % 10(@)(@@) % وخصهم منه بما خصهم % % وكان بالذكرى لهم جاه % % PageV01P1740 11(@)(@@) % ولكن التقدير قد عاقهم % % عنه وفاز الكل لولاه % % 12(@)(@@) % وهو الذي يقضي عليهم بهم % % لأن علم الله مبداه % % 13(@)(@@) % والعلم عنهم كاشف حيث هم % % في عدم لا شيء معناه % % 14(@)(@@) % وكيفما هم جاء إيجادهم % % من نعمة المولى وجدواه % % 15(@)(@@) % والخير والشر سواء له % % أيهما بالخلق أولاه % % 16(@)(@@) % والله لا يظلم شيئا وقد % % فاضت على الكل عطاياه % % PageV01P1741 البحر : - 1(@)(@@) % أنتم هم المال يا سادتي والجاه % % والقلب مني هواكم للردى ألجاه % % 2(@)(@@) % وأصبح العيد أخشى ما يراه أرجاه % % وعرش سري ملك علمي على أرجاه % % PageV01P1742 البحر : - 1(@)(@@) % سميت ساعة فخذ نطق فيها % % إنها الساعة التي أنت فيها % % 2(@)(@@) % قال عنها ترونها دون تأتي % % فتأمل لأنه مبديها % % 3(@)(@@) % والسموات قال مطويات % % بيمين له أيا مقتفيها % % 4(@)(@@) % وحقيق قيامها بك فاكشف % % سورة الانشقاق كشفا نزيها % % 5(@)(@@) % وكذا الانفطار مع سورة التك % % وير واترك لبسا ودع تمويها % % 6(@)(@@) % ثم عنها بأنها ثقلت قا % % ل لإظهار نشاة تقتضبها % % 7(@)(@@) % فهي حق وكل ما ليس منها % % فحال مشوه توشيها % % 8(@)(@@) % من يرم كشفها يكن مستقميا % % ولينزه إلهه تنزيها % % 9(@)(@@) % وليمت أن أول الأمر موت % % ثم قبر في تربة يحويها % % 10(@)(@@) % وسؤال من روحه وبطون % % من ظهور أسراره يخفيها % % PageV01P1743 11(@)(@@) % ثم من بعد ظهور عظيم % % واسمه ساعة لم يعنيها % % 12(@)(@@) % فتحقق ما قد بثثتك وافهم % % فالمعاني يجل من يدريها % % PageV01P1744 البحر 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms350# : - 1(@)(@@) % يا من تكلم فينا بالذي فيه % % وقعت في كف ضرغام وفي فيه % % 2(@)(@@) % ودع حياتك إن السم فيك سرى % % من لحمنا عنك لا تستطيع تنفيه % % 3(@)(@@) % واختر لنفسك دينا مت عليه سوى % % دين النبي الذي انكرتنا فيه % % 4(@)(@@) % فقد جحدت الغيور الحق ملته % % هيهات إنك تنجو من اياديه % % 5(@)(@@) % وإن جهلت فما بالكفر بعذر ذو % % جهل لدى الشرع والشيطان يطغيه % % 6(@)(@@) % دم في ظنونك مفتونا فسوف ترى % % من الذي منه قبح الفعل يرديه % % 7(@)(@@) % ولا تقل أي جاه للضعيف يرى % % فإن للبيت ربا سوف يحميه % % 8(@)(@@) % يا ستبحينم أعراضا محرمة % % بسوء ظن وتلبيس وتمويه % % 9(@)(@@) % أهكذا ملة الإسلام تأمركم % % أم قد سلكتم عن الإسلام في تيه % % 10(@)(@@) % تبا لكم ولمن قد عاد يتبعكم % % والعبد مولاه في الأعداء يكفيه % % PageV01P1745 البحر : - 1(@)(@@) % كل شيء به تغلق شيء % % كان أعلى منه بغير اشتباه % % 2(@)(@@) % فتأمل يا من تعلق منه ال % % قلب جهلا بماله والجاه % % 3(@)(@@) % قلبك الآن صار رأدني من الدن % % يا ومن شأنها الحقير الواهي % % 4(@)(@@) % وهي ملعونة فما هو أدنى % % كيف قل لي يكون عند الله % % PageV01P1746 البحر : - 1(@)(@@) % أنا صاحب الأمر الإلهي % % أنا آمر أبدا وناهي % % 2(@)(@@) % أناذ والعيون وذو الوجو % % ه وذو والنفوس بلا تناهي % % 3(@)(@@) % أنا ذلك الفرد الذي % % أدرى فهل أحد يباهى % % 4(@)(@@) % أنا درة البحر المحي % % ط بما يحيط من المياه % % 5(@)(@@) % أنا كوكب الفلك الذي % % خضعت له شم الجباه % % 6(@)(@@) % وأنا الذي جردت ذا % % تي عن ثياب الاشتباه % % 7(@)(@@) % وأنا الذلول الصعب وال % % معدود في أدهى الدواهي % % 8(@)(@@) % وأنا القديم الحادث ال % % داني البعيد ولا مضاهي % % 9(@)(@@) % حي ميتم والأسي % % ر المطلق العي المباهي % % 10(@)(@@) % وكذا أنا الموجود وال % % معدوم يا ذا الانتباه % % PageV01P1747 11(@)(@@) % وأنا الحقير المستها % % ن أنا رفيع على وجاه % % 12(@)(@@) % وأنا التراب وأنني % % نور بأفق الغيب زاهي % % 13(@)(@@) % أنا قادر أنا عاجز % % وأنا قوي بل وواهي % % 14(@)(@@) % أنا جاهل لا علم لي % % أنا من بعلمي لي يضاهي % % 15(@)(@@) % أنا لست أعرف من أنا % % أنا عراف بي لست لاهي % % 16(@)(@@) % أنا لست حيوانا ولا % % إنسا ولا جنا يلاهي % % 17(@)(@@) % أنا لست شيطانا ولا % % ملكا عصمت من المناهي % % 18(@)(@@) % أنا لست يقظانا ولا % % أنا غافل عني 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms351# وساهي % % 19(@)(@@) % أنا ليس تلهيني الملا % % هي بل أنا ألهي الملاهي % % 20(@)(@@) % وحقيقتي حار الورى % % فيها ولا يدرون ما هي % % PageV01P1748 21(@)(@@) % سل نغمة الطنبور عن % % أمري الذي في تلك باهي % % 22(@)(@@) % وسل الدنان وسل كؤو % % س الراح والغيد اللواهي % % 23(@)(@@) % وسل المدامة والند % % يم ومجلسا للأنس شاهي % % 24(@)(@@) % واسمع على طور الفنا % % إني أنا واعص النواهي % % PageV01P1749 البحر : - 1(@)(@@) % إن الذي أكد وعدى وفاه % % وبالمنى خاطب قلبي وفاه % % 2(@)(@@) % طلعته تهمك استارنا % % وتثبت العين لدينا وفاه % % 3(@)(@@) % محتجب لكنه ظاهر % % لكل من عنه نفى الاشتباه % % 4(@)(@@) % لا كان من ينظر في غيره % % ولا تهنى من يلاقي سواه % % 5(@)(@@) % تعودت أغياره أمة % % لا تعرف اليقظة والانتباه % % 6(@)(@@) % وكل من قد تاه فيه اهتدى % % له ومن فيه اهتدى عنه تاه % % 7(@)(@@) % روض جرت أسماؤه جدولا % منه فأنواع البرايا مياه % % 8(@)(@@) % فانظر إلى هيكلنا تلقه % % وكل ما شئت ترى في حماه % % 9(@)(@@) % اسكندر العزم من المقتفي % % آثارنا يدرك عين الحياه % % 10(@)(@@) % من زال فيه عن سواه التقى % % به ومنه قد أتاه مناه % % PageV01P1750 11(@)(@@) % قد سجدت كل البرايا له % % لما تجلى رافلا في حلاه % % 12(@)(@@) % بالله يا ريح الصبا بلغي % % أحبابنا بالجزع وجدا نراه % % 13(@)(@@) % فإن من زاد به داؤه % % ريح الصبا من نحو سعدي دواه % % 14(@)(@@) % فليت طيف الحب لو زارني % % وأسعد المضني وأهني حشاه % % 15(@)(@@) % فإنه كان إلى مثله % % يسري ويحلو لفؤادي سراه % % 16(@)(@@) % ولكن الألباب محجوبة % % عنه بما تدرك مما تراه % % 17(@)(@@) % وقد عنت كل قلوب الورى % % له وقد ذلت عليه الجباه % % 18(@)(@@) % ومن درى ذاب ومن لادرى % % وكلهم منطرح في حماه % % PageV01P1751 البحر : - 1(@)(@@) % تجلى الزاهر الزاهي % % لقلب الساهر الساهي % % 2(@)(@@) % فأفنى كل موجود % % سناه الباهر الباهي % % 3(@)(@@) % دور % % 4(@)(@@) % هو المعروف بالامداد % % هو الموصوف بالإسعاد % % 5(@)(@@) % بدت سماؤهأ الحسنى % % وما في الكون إلاهي % % 6(@)(@@) % دور % % 7(@)(@@) % رأينا وجهه الباقي % % سقانا كأسه الساقي % % 8(@)(@@) % وأنا من تجليه % % لفي عز وفي جاه % % 9(@)(@@) % دور % % 10(@)(@@) % بدا العاشق المسكي % % ن في صعب وفي تهوين % % PageV01P1752 11(@)(@@) % فلم يقدر على إنكا % % ره والله والله % % 12(@)(@@) % دور % % 13(@)(@@) % ومن يعرض عن المختار % % فهو الجاهل المحتار % % 14(@)(@@) % له عبد الغنى عما % % سواه الناهر الناهي % % PageV01P1753 البحر : - 1(@)(@@) % إن تكن بالله قائم % % لم تكن بل أنت هو % % 2(@)(@@) % أنت ظل 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms352# الغيب من أسم % % ائه والشمس هو % % 3(@)(@@) % دور % % 4(@)(@@) % أشرقت أنوار سلمى % % فظهرنا كلنا % % 5(@)(@@) % يا خفافيش التجلي % % ما تبدى غيرهو % % 6(@)(@@) % دور % % 7(@)(@@) % لي حبيب بل طبيب % % بل رقيب كلما % % 8(@)(@@) % ملت عن رد ميلي % % نحوه في الحال هو % % 9(@)(@@) % دور % % 10(@)(@@) % أيها العقل الذي قد % % حار في إدراكه % % PageV01P1754 11(@)(@@) % لا تعاند أنا مملو % % ك وفي تصريف هو % % 12(@)(@@) % دور % % 13(@)(@@) % كم إلى كم أنت عنه % % في التهاء بل به % % 14(@)(@@) % أنت مشغول ولا تد % % ري فقد ألهاك هو % % 15(@)(@@) % دور % % 16(@)(@@) % صل يارب وسلم % % دائما مني على % % 17(@)(@@) % أحمد المختار طه % % كاشف أسرار هو % % 18(@)(@@) % دور % % 19(@)(@@) % وعلى لآ وأصحا % % ب بهم عبد الغني % % 20(@)(@@) % نال فضلا وكمالا % كلما قد قال هو % % PageV01P1755 البحر : - 1(@)(@@) % فتحت عندنا المليحة فاها % % والذي كان كاتم السر فاها % % 2(@)(@@) % كل شيء فم لمنية قلبي % % ناطق بالذي يزيل اشتباها % % 3(@)(@@) % فأسمعوا يا قلوب أخبار ليلى % % عن علوم الغيوب لا تتناهي % % 4(@)(@@) % خمرة أوهمت عيون أناس % % إنها في الكؤوس يوم لقاها % % 5(@)(@@) % هي لولا كؤوسها ما تبدت % % ما تبدت كؤوسها لولاها % % 6(@)(@@) % ذات وجه ايان قد تولي % % ت أراه أو شئت قلت أراها % % 7(@)(@@) % وهو وجه في الحديث جميل % % ويحب الجمال إن الله % % 8(@)(@@) % فهو كل الملاح كل المحبي % % ن يريك النظائر أشباها % % 9(@)(@@) % أنا فان فيه وكل محب % % بلغت صبوتي به منتهاها % % 10(@)(@@) % ما ألذ الفنا بطلعة باق % % كل من رامه ولم يفن تاها % % PageV01P1756 11(@)(@@) % لا تظن الفنا به غير ما أن % % ت عليه إذا انتبهت انتباها % % 12(@)(@@) % إن علم اليقين غر بقوم % % فهم المفتونون مالا وجاها % % 13(@)(@@) % حسبوه عين اليقين كأعمى % % حسب الفهم رؤية فتباهى % % 14(@)(@@) % ربما علمهم يجر إليهم % % فتنة الكفر فاحذروا مبتداها % % 15(@)(@@) % علم إبليس كان علم يقين % % عنه عين اليقين أخفت سناها % % 16(@)(@@) % لو رأى الحق ما أبى عن سجود % % منع العين علمه معناها % % 17(@)(@@) % ثم ماذا يغنيك علمك عن عي % % نيك يا من بعزة العلم تاها % % 18(@)(@@) % فوق ما أنت فيه رتبة كشف % % غير كشف الخيال يحلو سباها % % 19(@)(@@) % فترى فيه كل ما كان علما % لك فاستجل شمسها وضحاها % % 20(@)(@@) % ثم من فوق ذاك رتبة حق % % وهو اعطاء كل نفس هداها % % PageV01P1757 21(@)(@@) % ربنا الرب وفيه والعبد عبد % % ثم 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms353# مع ذاك وحدة لا سواها % % PageV01P1758 البحر : - 1(@)(@@) % عليك بروح السر الإلهي % % إلى كم أنت عن ذا السر لاهي % % 2(@)(@@) % اتطلبه وروحك أمره قد % % أتاك عن السوى لك منك ناهي % % 3(@)(@@) % فبينك ول عرفت وبين رب % % قديم جل روحك فأدر ما هي % % 4(@)(@@) % وجسمك دون قدرك وهو فان % % به المفتون أنت وفي تلاهي % % 5(@)(@@) % وروحك يا ابن آدم ليس تفنى % % وتلك لد البقاء بلا تناهي % % 6(@)(@@) % هي البرق اللموع خلال بيت % % بنته بالتراب وبالمياه % % 7(@)(@@) % وهدم البيت معلوم فعجل % % بكشفك عنك هذا البيت واهي % % 8(@)(@@) % ولا تحسب بأنك أنت جسم % % فإنك غافل عن أنت ساهي % % 9(@)(@@) % وأنت الروح وهي عليك جاءت % % ملبسة منالأمر الإلهي % % 10(@)(@@) % فحقق صورة لك أنت فيها % % تجدها الروح حمراء الشفاه % % PageV01P1759 11(@)(@@) % يصورها الذي هي في يديه % % كما قد شاء في ذل وجاه % % 12(@)(@@) % وفي مرض وعافية وحسن % % وقبح فاتصف بالانتباه % % 13(@)(@@) % إلا فاقرأ له الخلق اكتفاء % % به والأمر ياذا الاشتباه % % 14(@)(@@) % فجسمك خلقه والروح أمر % % له فافهم بفهم منه باهي % % 15(@)(@@) % وجسمك فاعطه حقا بشرع % % ومنه على الثرى وضع الجباه % % 16(@)(@@) % وحق الروح أخلاق حسان % % ونحو الحق تحقيق اتجاه % % 17(@)(@@) % وقم بأوامر التكليف واترك % % بإخلاص له كل المناهي % % 18(@)(@@) % فإن حققته وتركت حكما % % عليك له دفعت إلى الدواهي % % 19(@)(@@) % ولم يحفظ عليك الوقت حتى % % يضلك بالمعاند والمضاهي % % 20(@)(@@) % ومن يفرق ولو من بعد جمع % % عليه آمر يدعو وناهي % % PageV01P1760 21(@)(@@) % وروح النفخ منه ومن عداه % % فيلحق بالبهائم والشياه % % 22(@)(@@) % وأما الاحترام فذاك شيء % % به أبدا يصير القلب زاهي % % PageV01P1761 البحر : - 1(@)(@@) % من تجلى له الإله بضر % غلب النفع بالتجلي عليه % % 2(@)(@@) % ولهذا يذيقه الضر تطه % % يرا سريعا بما جني بيديه % % 3(@)(@@) % رحمة منه جل بالعبد كيلا % % يترك العبد بالفساد لديه % % 4(@)(@@) % وإذا ما به تجلى بنفع % % عاد منه نفع له يقتضيه % % 5(@)(@@) % كل هذا من سبع رحمة ربي % % غضبا جاء في الحديث النبيه % % PageV01P1762 البحر : - 1(@)(@@) % لقد أتانا حديث مشايخنا % % مسلسلا أوليا قد رويناه % % 2(@)(@@) % قال النبي صلاة الله دائمة % % مع السلام عليه عند ذكراه % % 3(@)(@@) % الراحمون هم الرحمن يرحمهم % % برحمة منه نرويه بمعناه % % 4(@)(@@) % من كان يرحم من في الأرض يرحمه % % من في السماء وإن الراحم الله % % PageV01P1763 البحر : - 1(@)(@@) % نحن بالأمر 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms354# الإلهي % % كانا بيب المياه % % 2(@)(@@) % صور نحن خلقنا % % هكذا للانتباه % % 3(@)(@@) % فإذا عنا غفلنا % % فيه كنا كالشياه % % 4(@)(@@) % وجمدنا مثل ثلج % % ناله برد التلاهي % % 5(@)(@@) % فتحقق ثم ذب في % % حر نفي الاشتباه % % 6(@)(@@) % نحن خلق نحن أمر % % نحن تقدير الإله % % 7(@)(@@) % نحن لا شيء ولكن % % نحن حكم الحق باهي % % 8(@)(@@) % نتبدى مثل برق % % لامع في العين زاهي % % 9(@)(@@) % ثم نخفي ثم نبدو % % بأمور ونواهي % % 10(@)(@@) % لمتى عينك عميا % % لمتى قلبك ساهي % % PageV01P1764 11(@)(@@) % خل عنك الطبع واسلك % % في هدى غر الجباه % % 12(@)(@@) % مثل القوم الذي ما % % إن له قط تباهى % % 13(@)(@@) % فسوى ذلك جهل % % وضعيف القول واهي % % PageV01P1765 البحر : - 1(@)(@@) % غزال ذاك الحمى صبري قضى فيه % % 2(@)(@@) % هيهات يخلص قلبي من إياديه % % 3(@)(@@) % بالله يا سائق الأظعان في التيه % % 4(@)(@@) % حي الملاعب من سلع وواديه % % وحي سكانه وانزل بناديه % % 5(@)(@@) % سمعي الذي صار يوم البين سمعهمو % % 6(@)(@@) % وقد وجدت بعين الضر نفعهمو % % 7(@)(@@) % قف بالأجارع أصلي صار فرعهمو % % 8(@)(@@) % وانشد فؤادي إذا عاينت ربعهمو % % بين الخيام فقد خلقته فيه % % 9(@)(@@) % أواه لم تبق لي روحيولا بدني % % 10(@)(@@) % يا سائق الظعن بل كلى عليه فنى % % PageV01P1766 11(@)(@@) % هي المنازل كن فيها ولا تكن % % 12(@)(@@) % واذكر هنالك أشواقي وصف شجني % % وقل عليل هواكم من يداويه % % 13(@)(@@) % أنا المسمى على وهم بعبدكمو % % 14(@)(@@) % والوجد مني إليكم عين وجدكمو % % 15(@)(@@) % وحقكم لي لقاكم محض فقدكمو % % 16(@)(@@) % يا جيرة الحي قد جرتم ببعدكمو % % على فتى قربكم أقصى أمانيه % % 17(@)(@@) % كم في هواكم أبان الشوق نيته % % 18(@)(@@) % للغير حتى طوى كل طويته % % 19(@)(@@) % كل الهويات قد صارت هويته % % 20(@)(@@) % يكاد من بعدكم يقضي منيته % % لولا تدارك طيف الحلم ياتيه % % PageV01P1767 21(@)(@@) % لم ألق في الكون شيئا قط يعجبني % % 22(@)(@@) % مالم أراه بكم منكم لدى بني % % 23(@)(@@) % وسر طلعتكم يا ساكني بدني % % 24(@)(@@) % أحن شوقا إلى الوادي فيطربني % % نوح الحمام سحيرا في نواحيه % % 25(@)(@@) % كم روض أنس بكم شقت كمائمه % % 26(@)(@@) % فهيجت بشذا الذكرى نسائمه % % 27(@)(@@) % وغصن نشأة كوني كم أداومه % % 28(@)(@@) % ويعتريني إذا ناحت حمائمه % % وجد يذوب الحشى من ذكر أهليه % % 29(@)(@@) % لمتقى هذه الدنيا وفاجرها % % 30(@)(@@) % حالات صدق لباغيها وهاجرها % % PageV01P1768 31(@)(@@) % يا سعد خذ حالتيمن بذل حاجرها % % 32(@)(@@) % إن فاض ماء دموعي من محاجرها % % لا تشرب الماء إلا من مجاريه % % PageV01P1769 البحر : - 1(@)(@@) % ردني الله 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms355# إليه من سواه % % بالذي شاء فلا أحصى ثناه % % 2(@)(@@) % وتولاني فلا حول ولا % % قوة مع حول قلبي وقواه % % 3(@)(@@) % وأنا استغفر الله هنا % % من مقامي أن أرى فيه سواه % % 4(@)(@@) % يا وجودا أنا فيه عدم % % طبق تقديرك لي ناديت يا هو % % 5(@)(@@) % لا تدعي بالسوى مشتغلا % % عنك لي عز من الغير وجاه % % 6(@)(@@) % أنا محفوظ ومحفوظوإن % % صلف الكل على حالي وتاهوا % % 7(@)(@@) % وأنا الملحوظ بالعين التي % % هي عين العين ما فيها اشتباه % % 8(@)(@@) % فتنكب يهاأ العاذل عن % % لوم صب ذاب عشقا من صباه % % PageV01P1770 البحر : - 1(@)(@@) % حقيقة الكل روح الله يهديها % % لبعضها البعض تلبيسا وتمويها % % 2(@)(@@) % فانظر لنفسك وحقق من يسويها % % ووجهة قل لكل هو موليها % % PageV01P1771 البحر : - 1(@)(@@) % هي قامت بنفسها لذويها % % ليس في كاسها ولا الكاس فيها % % 2(@)(@@) % خمرة تذهب العقول وتفنى % % كل شيء لكل من يجتليها % % 3(@)(@@) % هاتها يا نديم واترك سواها % % فسواها هي التي نعنيها % % 4(@)(@@) % لا تقل إنها هي الكون جهلا % % إنما الكون نشو أمر يليها % % 5(@)(@@) % أمرها كن فكان عند سواها % % وسواها اثباته ينفيها % % 6(@)(@@) % ليس معها شيء ومع كل شيء % % هي فافهم إن كنت شهما نبيها % % 7(@)(@@) % هي تهدي بها لها من أرادت % % فتزيل التكييف والتشبيها % % 8(@)(@@) % وتضل الذي أرادت فسلم % % أمرها فيك والزم التنزيها % % 9(@)(@@) % واتبع الشرع مذعنا وتوسل % % بعباداتها التي ترتضيها % % 10(@)(@@) % لا يريك الحق المبين سواها % % خل عنك الجدال والتمويها % % PageV01P1772 11(@)(@@) % قم بها دائما عليها وجاهد % % صادقا في القيام تدنو إليها % % 12(@)(@@) % فتراها بها ولا أنت معها % % إنما أنت كالحجاب عليها % % 13(@)(@@) % وهي ليست محجوبة فتحقق % % بالفنا في البقا وأنت لديها % % 14(@)(@@) % لك نصحي بذلت إن كنت ممن % % وفقته إن يقبل النصح فيها % % 15(@)(@@) % لا تظن التوحيد بالعقل مقبو % % لا وحاذر نصر بذاك سفيها % % 16(@)(@@) % نعم العقل كان للشرع أصلا % % بينما الشرع فيه صار بديها % % 17(@)(@@) % ثم أغنى بحكمه الشرع عنه % % حيث أن التوحيد بالعقل عيها % % 18(@)(@@) % وهو شرك إذا تأملت فيه % % فقد خفى عنك فاطلب التنبيها % % 19(@)(@@) % إن توحيد كل عقل إذا لم % % يك بالشرع لا يكون وجيها % % 20(@)(@@) % مثل إبليس وحد الله عقلا % % تاركا أمر ربه تشويها % % PageV01P1773 21(@)(@@) % ليس توحيده الإله بمقبو % % ل ولو كان فيه حبرا فقيها % % 22(@)(@@) % حيث عن 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms356# أمر ربه حاد فسقا % % وعلى ما نهاه كان شريها % % 23(@)(@@) % فهو زنديق كل شرع فحاذر % % صفة فيه لم يزل يقتفيها % % 24(@)(@@) % قائلا إنني لغيرك لا أس % % جد طعنا في الأمر عجبا وتيها % % 25(@)(@@) % مثل ما قالت الزنادقة الشر % % ع لمن كان غافلا تمويها % % 26(@)(@@) % يدعون التوحيد توحيد إبلي % % س يرون الأحكام شيئا كريها % % 27(@)(@@) % فعليهم طول المدى وعليه % % لعنة الله إن ونت قيل إيها % % PageV01P1774 البحر : - 1(@)(@@) % كيف أخشى من اللعين اللاهي % % وأنا في حماية من إلهي % % 2(@)(@@) % أنا قطمير سادة أهل كهف ال % % غيب آووا إليه دون تلاهي % % 3(@)(@@) % ينشر الله رحمة ويهيء % % لهمو مرفقا من الأمر باهي % % 4(@)(@@) % ليس يخشون من غواية دقيا % % نوس غير المن يراه مضاهى % % 5(@)(@@) % مؤمنا مل أزل بهم وبما قد % % جاء عنهم قطعا بغير اشتباه % % 6(@)(@@) % باسطا بالوصيد مني ذراعي % % ن لسانا والقلب للانتباه % % 7(@)(@@) % فعسى الله أن يمن علينا % % بلحاق بهم بعز وجاه % % 8(@)(@@) % هم رجال الله الذين اصطفاهم % % وحماهم من الدها والدواهي % % 9(@)(@@) % لم تزل نعمة الإله عليهم % % تتوالى لهم بغير تناهي % % 10(@)(@@) % وليهم يدوم رضوان ربي % % ما استهل السحاب بالأمواه % % PageV01P1775 البحر : - 1(@)(@@) % يا نسيم الحي عني % % بث مالا يتناهى % % 2(@)(@@) % من غرام واشتياق % % نحو طه وابن طه % % 3(@)(@@) % سيد ساد بأصل % % وبفرع قد تباهى % % 4(@)(@@) % دأبه التقوى بها لهو % % رمت توصية تراها % % 5(@)(@@) % وإذا قلت انتبه لم % % تر إلا الانتباها % % 6(@)(@@) % فهو توفيق إلهي % % جامع فضلا وجاها % % 7(@)(@@) % نسأل الله التباسا % % عنه يمحو واشتباها % % 8(@)(@@) % معدما من لم يزل ما % % لم يكن منه شفاها % % 9(@)(@@) % فيرى الغير محالا % % ويرى الحق بداها % % 10(@)(@@) % ويرى الأكوان تفنى % % عنده كشفا تلاها % % PageV01P1776 11(@)(@@) % صانه الله وعما % % قد حوى لا يتلاهى % % 12(@)(@@) % وحباه منه علما % % يعدم النفس هواها % % 13(@)(@@) % وسلام الله مني % % دام يلقاه تجاها % % PageV01P1777 البحر : - 1(@)(@@) % قلت للعارف النبيل النبيه % % خذ كلاما لا شك عندك فيه % % 2(@)(@@) % لا تظن الخليل قد قال هذا % % هو ربي عن كوكب رآئيه % % 3(@)(@@) % أو عن الشمس أو عن القمر البا % % زغ حاشاه من ضلال يعيه % % 4(@)(@@) % إنما قال ذاك عن ملكوت % % قد أراه الإله للتنبيه % % 5(@)(@@) % ومن الموقنين صار كما قا % % ل لنا الله عنه إذ يصطفيه % % 6(@)(@@) % واقرأ الآية التي ذاك فيها 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms357# % % وتأمل بالفهم ما تأتيه % % 7(@)(@@) % تجد الأمر واسمه ملكوت % % أمر رب عن الجميع نزيه % % 8(@)(@@) % ولذا كان قائلا لا أحب الآ % % فلين الخلق الذي يعنيه % % 9(@)(@@) % بل أحب الأمر الذي هو قيو % % م عليهم كما أشير إليه % % 10(@)(@@) % وهو علم الإشارة الإرث ممما % % جاءت الانبيا بيه تقتفيه % % PageV01P1778 11(@)(@@) % قد ورثناه عن شيوخ كرام % % بالأسانيد عن نبي نبيه % % 12(@)(@@) % دعوة لحقا للخليقة طرا % % لا بكيف لها ولا تشبيه % % 13(@)(@@) % فانقلوها عنا إلى من أردتم % % بمعاني التسبيح والتنزيه % % 14(@)(@@) % وكذاك الأصنام صارت جذاذا % % بيد منه غيرة تعتريه % % 15(@)(@@) % ثم من بعد قال الأكبيرا % % علهم يرجعون عنهم لديه % % 16(@)(@@) % وكبير الأصنام رب محيط % % أمره بالورى كما ينويه % % 17(@)(@@) % وبعيد عنه يقول عن الأص % % نام إلا كبيرهم يعليه % % 18(@)(@@) % وهو إبراهيم الخليل صلاة % % مع سلام من الإله عليه % % 19(@)(@@) % فاسألوهم ولم يقل فاسألوه % % حيث كانوا عنه لفي تمويه % % 20(@)(@@) % هكذا فافقه الكلام وإلا % % فاترك الحق عند شيخ فقيه % % PageV01P1779 البحر : - 1(@)(@@) % إنني قائم بأمر الله % % لا أبالي بما يقول اللاهي % % 2(@)(@@) % هو يبغي دعوى الوجود لشيء % % وأنا لا وجود لي في انتباه % % 3(@)(@@) % صدق الله كل شيء سواه % % هالك دون مرية واشتباه % % 4(@)(@@) % لي إليه إضافة وانتساب % % ولهذا ادعى بعبد الله % % 5(@)(@@) % فوجودي الذي ترون له لا % % هو لي قد أعارنيه إلهي % % 6(@)(@@) % فله الحمد أولا وأخيرا % % أمد الدهر دون شوب تناهى % % PageV01P1780 البحر : - 1(@)(@@) % صبغة الله وجود الله % % صابغ ذاكره واللاهي % % 2(@)(@@) % والبرايا عدم أجمعهم % % بثبوت دون علم الله % % 3(@)(@@) % قف قليلا وتأمل أنت في % % كل وقت كائن يا ساهي % % 4(@)(@@) % بالتجلي لك تبدو خلقه % % ثم تخفى ليس تدري ماهي % % 5(@)(@@) % بارق يلمع قد ظن له % % وقفه من لبسة الأشباه % % 6(@)(@@) % هو خلق الله أي تقديره % % ظاهر بالأمر أمر الله % % 7(@)(@@) % ثم أمر الله قل واحدة % % مثل لمح البصر الأواه % % 8(@)(@@) % هذه حالة عبدا أمر % % من أولى الأمر وعبدنا هي % % PageV01P1781 البحر : - 1(@)(@@) % يا من تقاصر شكري عن أياديه % % وكل كل لسان عن معانيه % % 2(@)(@@) % وجوده لم يزل فردا بلا سبب % % علا عن الخلق دانيه وقاصيه % % 3(@)(@@) % لا قهر يلحقه لا عون ينصره % % لا حصر يجمعه لا قطر يحويه % % 4(@)(@@) % جلاله أزلي لا زوال له % % وملكه دائم لا 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms358# شيء يفنيه % % PageV01P1782 البحر : - 1(@)(@@) % فهذه هذه الأبيات أربعة % % أتت إلينا لإيقاظ وتنبيه % % 2(@)(@@) % رؤيا رآها لنا عبد يخاطبنا % % بلفظها صالح من غير تمويه % % 3(@)(@@) % حق يطابق حقا عند عارفه % % حقيقة هو منا ظاهر فيه % % 4(@)(@@) % فالحمد لله حمدا منه عنه له % % مدى الزمان ولا شيء يكافيه % % PageV01P1783 البحر : - 1(@)(@@) % نقطة النفس فوق عين الإله % % صيرتها غنيا بحكم اشتباه % % 2(@)(@@) % فهو عين بنقطة النفس غين % % حائل بين شمس نور الله % % 3(@)(@@) % فانسب النفس منك لله خلقا % % وافن عنها به ودع كل لاهي % % 4(@)(@@) % واعرف الخلق هكذا وهو أمر % % لمع برق ودم على الانتباه % % 5(@)(@@) % لا تعد للجمود ذلك وهم % % غالب فيك وهي أحدى الدواهي % % 6(@)(@@) % يا ناب قومي إني نصحتك فاسمع % % قول من كان آمر أو هو ناهي % % 7(@)(@@) % ظاهرا باطنا به لا بنفس % % وتحفظ من حب مال وجاه % % 8(@)(@@) % تكن الكامل الذي هو فرد % % جامع غير رتبة غير ساهي % % 9(@)(@@) % تابع للرسول وارث علم % % للبنين زائد الفضل باهي % % 10(@)(@@) % وهو الله لا سواه بغيب % % ليس تدري به عقول الشياه % % PageV01P1784 البحر : - 1(@)(@@) % أنا معني عناني الحق فيه % % ومثلي كل شيء قول فيه % % 2(@)(@@) % معان كلنا روحا ونفسا % % وأجساما وذا أمر بديهي % % 3(@)(@@) % وهذا الحق يعنينا بعلم % % قديم نحن معدومون فيه % % 4(@)(@@) % إلا هو الوجود الحق فرد % % بلا كيف لديه ولا شبيه % % 5(@)(@@) % فيحو ما يشاء الحق منا % % ويثبت طبق ترتيب لديه % % 6(@)(@@) % ونحن جميعنا عدم ولكن % % يقدرنا فيظهرنا لذيه % % 7(@)(@@) % لذاك نظن أن لنا وجودا % % بعين وجوده الحق النزيه % % 8(@)(@@) % تعالى الله لا شيء سواه % % وضل مقارف الشرك الكريه % % 9(@)(@@) % ولا أحد يحيط به تعالى % % ولا فهم ولا عقل يعيه % % 10(@)(@@) % متى يهدي بلاغا عنه عبد % % إذا سكت المبلغ قال إيه % % PageV01P1785 11(@)(@@) % ومن يبدو الضلال عليه ينأى % % بجانبه فيسقط في يديه % % 12(@)(@@) % وأهل الله كل فتى كريم % % نبيل ذي سيادات نبيه % % 13(@)(@@) % إذا وقع الجهول بنا دحاه % % وأعرض عن مقالات السفيه % % 14(@)(@@) % وماذا تبتغي السفهاء منا % % على جهل بإعجاب وتيه % % 15(@)(@@) % ونحن أولوا العلوم بصدق عزم % % لدى الأشياخ عن وجه وجيه % % 16(@)(@@) % يظل حيدناو يروي المعالي % % هنا عن جده أو عن أبيه % % 17(@)(@@) % ولم يدنس لخه نسب بكفر % % إذا ما الأم تظهر تزدريه 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms359# % % 18(@)(@@) % له القلب السليم ولم يحل عن % % طريقة ذي التقى الثقة الفقيه % % PageV01P1786 البحر : - 1(@)(@@) % لنا الدرة البيضاء والعلم والجاه % % وقلبي ترقيه إلى الله ألجاه % % 2(@)(@@) % ولولاه ما كنا ولولاه لم نكن % % ولولاه ما قلنا له عنه لولاه % % 3(@)(@@) % وجود تجل وهو ذات قديمة % % منزهة عن كل لفظ ومعناه % % 4(@)(@@) % له صور من علمه قد ترتبت % % ظهورا ولا موجود في الكون إلا هو % % 5(@)(@@) % يقول أب لي قبل كوني مقدم % % على بمحي الدين ربي سماه % % 6(@)(@@) % وذلك من نظم لأسماء ربنا % % جليل به قد قال قولا فهمناه % % 7(@)(@@) % إلا أنني عبد الغني لذاته % % وليس سواه فالمعين هو الله % % PageV01P1787 البحر : - 1(@)(@@) % ما في الوجود سوى الواحد هو الله % % والكل فيه العدم لولاه لولاه % % 2(@)(@@) % ما بال قومي عن التحقيق قد تاهو % % أما أنا ذلك الموجود وأما هو % % PageV01P1788 البحر : - 1(@)(@@) % ذات تبدت في بديع حلاها % % 2(@)(@@) % مخفية عمن يكون سواها % % 3(@)(@@) % وحياة من بجمالها نتباهى % % 4(@)(@@) % إن التي ملأ الوجود هواها % % أصبحت مشغوفا بمن سواها % % 5(@)(@@) % هي ذات وجه تنجلي في حضرة % % 6(@)(@@) % للعاشقين بها الهيام بنظرة % % 7(@)(@@) % قال الحجي لا بدلي من نفرة % % 8(@)(@@) % فلقد تجلت لي بأحسن صورة % % فيها ولم يكن الوجود سواها % % 9(@)(@@) % أنا لم أزل بين الورى أزهو بها % % 10(@)(@@) % وأمد باعي في تناول قزبها % % PageV01P1789 11(@)(@@) % وأقول مع سكري بخمرة حبها % % 12(@)(@@) % من أعجب الأشياء محو محبها % % عند الشهود بعرشها وعماها % % 13(@)(@@) % ذاتي التي هي في الوجود جديدة % % 14(@)(@@) % كم مغرم اشقته وهي سعيدة % % 15(@)(@@) % إني أنا حلل لها معدودة % % 16(@)(@@) % لطفت عن التشبيه فهي فريدة % % فيما جلته لنا وفي معناها % % 17(@)(@@) % يا للهوى من غادة بدوية % % 18(@)(@@) % حضرية وهي التي في خفية % % 19(@)(@@) % حرنا فلم نرها بغير منية % % 20(@)(@@) % مع أنها في صورة جسدته % % وتعزان تعزى لمن أبداها % % PageV01P1790 21(@)(@@) % نحن الشخوص نلوح في مرءاتها % % 22(@)(@@) % وهي الوجود لنا بحسن صفاتها % % 23(@)(@@) % أواه واويلاه من فتكاتها % % 24(@)(@@) % حجبت صورتهاب حقيقة ذاتها % % فمماتها في صورة محياها % % PageV01P1791 البحر : - 1(@)(@@) % إن تشأ قل أنا وإن شئت قل هو % % وكذا إن تشأ فقل أنت تزهو % % 2(@)(@@) % كلهم واحد وجود حقيقي % % أحد والذي يرى الغير يلهو % % 3(@)(@@) % وكذا قل هما وإن شئت قل هم % % وإذا شئت هن قل ليس تسهو % % 4(@)(@@) % كل 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms360# هذا به يشار إلى من % % هو في الغيب ما لنا عنه لهو % % 5(@)(@@) % بحر نور وبحر ظلمة كون % % عند من يعرف الحقيقة رهو % % 6(@)(@@) % عدم وهو باطل ووجود % % هو حق بدا فقل عنه يا هو % % PageV01P1792 البحر : - 1(@)(@@) % لمن اشتكى ما بي وما بي هو الله % % ولا حاكم في الكون إلا هو الله % % 2(@)(@@) % وما الكون إلا الله والمشتكى له % % ومن يشتكي بل كل شكوى هي الله % % 3(@)(@@) % وما الله إلا غيبهم كلهم بدا % % بهم منه والمفعول والفاعل الله % % 4(@)(@@) % تعالى وجل الله عن كل حادث % % وما الله إلا الغيب ذاك هو الله % % 5(@)(@@) % كما قال في القرآن وهو كلامه % % لدينا وأنا مع لدينا هو الله % % 6(@)(@@) % هو الأول الله هو الآخر الله % % هو الظاهر الله هو الباطن الله % % 7(@)(@@) % وقرآننا الله الذي هو منزل % % بجبريل وهو الله نور هو الله % % 8(@)(@@) % على القلب وهو الله قلب محمد % % هو الله والأحكام فيه هي الله % % 9(@)(@@) % وهذا هو الله المسمى بجنة % % سمواته والأرض جمعا هي الله % % 10(@)(@@) % وأما أولوا الإنكار فالكل عندهم % % يسمونها الأشياء ليست هي الله % % PageV01P1793 11(@)(@@) % وما الله إلا عندهم ذلك الذي % % له صورة في عقلهم أنها الله % % 12(@)(@@) % وكل الذي في العقل والحس عندهم % % فهاتيك غير الله ليست هي الله % % 13(@)(@@) % هي النار بالأغيار في القلب أوقدت % % جهنم يصلاها وموقدها الله % % 14(@)(@@) % وما ثم الأجنة وجهنم % % فجنتنا الله التي قل هو الله % % 15(@)(@@) % كما نارهم أغياره أوقدت لهم % % فيصلونها والحاكم العادل الله % % 16(@)(@@) % فإن شئت كن في جنة أو جهنم % % فسوف ترى ما قلت عنه هو الله % % 17(@)(@@) % وتنمحق الأغيار عنك لأنها % % هي الباطل الموهوم يمحقه الله % % 18(@)(@@) % وما الحق إلا الله والكل باطل % % كما جاء في القرآن والقادر الله % % 19(@)(@@) % أخي لمتى هذا الغرور بباطل % % تنبه فموت الجهل ذاك هو الله % % 20(@)(@@) % هو الكل بل لا كل والكل هالك % % وفان وهذا كل هذا هو الله % % PageV01P1794 البحر : - 1(@)(@@) % سل القلب عن صدق المودة في الذي % % يودك إن القلب لا يقبل الرشوى % % 2(@)(@@) % ولا شتكيت إلا لمن أنت عبده % % فليس سوى المولى له ترفع الشكوى % % 3(@)(@@) % وإن خانك الناس الذي تودهم % % وما خنتهم في الود 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms361# فاصبر على البلوى % % 4(@)(@@) % ففي الغيب ذو علم وسمع ورؤية % % يحرر ميزان المعاملة الأقوى % % 5(@)(@@) % رقيب على كل العباد وأمرهم % % إليه فأما النار أو جنة المأوى % % PageV01P1795 البحر : - 1(@)(@@) % أنا العاشق السالي لوجهك يا علو % % وطعم الجفا مر وطعم الوفا حلو % % 2(@)(@@) % جمعت بها الأضداد من كل حالة % % فميت وحي ثم مع يقظة سهو % % 3(@)(@@) % وإني أنا الموجود عنها بهالها % % وما أنا موجود وما لغتي لغو % % 4(@)(@@) % وسكر ولا سكر إذا ما شهدتها % % وإن حجبت عني فصحو ولا صحو % % 5(@)(@@) % وسيرو ولا سيرو كشف وغفلة % % وعلم ولا علم وشجور ولا شجو % % 6(@)(@@) % تجهمت شأو العشق في نشأة الصبى % % وما من صبي فيها ولا عشق ولا شأو % % 7(@)(@@) % وداء الهوى داء عضال لدى الورى % % وما نافع فيه المداواة لا سأو % % 8(@)(@@) % ونلت على قدر المنى رتب المنى % % وما يستوي الولهان والفارغ الخلو % % 9(@)(@@) % وما قيدتني حالة دون حالة % % فلا كدر في الحب عندي ولا صفو % % 10(@)(@@) % وأصبحت في أوج الحقيقة راقيا % % فلا طلب مني لشيء ولا رجو % % PageV01P1796 11(@)(@@) % ولا وحشة والكون أنس وبهجة % % يلذ من الحادي لركبانه الحدو % % 12(@)(@@) % ولا سفر لا غربة لا إقامة % % ولا حضر يوم اللقاء ولا بدو % % 13(@)(@@) % لقد شغلتنا الظاهرات بمن بها % % لنا ظاهر حتى استوى الجد واللهو % % 14(@)(@@) % ورقت غليظات الأمور وروقت % % كؤوس المعاني فالأماني لها تلو % % 15(@)(@@) % فلا عجب إن طرت من رونق الهوى % % وإن زج بي في نور غيبي فلا غرو % % 16(@)(@@) % وما الفخر إلا فخر مثلي على السوى % % وزهو مقامي في التجلي هو الزهو % % 17(@)(@@) % ولي نفس يعلو بغير تكلف % % وغير بتكليف له النفس الربو % % 18(@)(@@) % وبحر المنى رهوا تركناه للورى % % وما بحر عشقي عند خائضه رهو % % 19(@)(@@) % بدت نار ليلى والظلام ينيرها % % من الكون حتى زال عندي لها العشو % % 20(@)(@@) % وما كل ذي قلب ينال منالنا % % من الغيب لكن كل بئر له دلو % % PageV01P1797 21(@)(@@) % هي الروضة الغناء أغنت بحسنها % % عن الكل فيها عرعر الغير والسرو % % 22(@)(@@) % وأغصانها منها تدلت كرامة % % علينا وقد طاب التناول والعطو % % 23(@)(@@) % هي الجنة الفردوس والقلب بابها % % ومن جاءها من نفسه صده العمو % % 24(@)(@@) % ولا جهل والعلم اللدني شعارها % % ولا ذنب أذ منها التجاوز 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms362# والعفو % % 25(@)(@@) % تعلقها قلبي فأوردت الردى % % لنفس فأفنت والهوى للردى صنو % % 26(@)(@@) % فريدة حسن لم تزل أحدية % % وليس لها مثل وليس لها كفو % % 27(@)(@@) % علامتها محو النفوس إذا بدت % % وذلك محو للنفوس ولا محو % % 28(@)(@@) % تجلت على العشاق نحو مرامهم % % فلذلهم في حبها ذلك النحو % % 29(@)(@@) % ويسعى ويعدوكل شيء بأمرها % % إليها فيحلو منهم السعي والعدو % % 30(@)(@@) % وكنت وكانت حيث لا كان ههنا % % ولكن على المعنى لها القهر والسطو % % PageV01P1798 31(@)(@@) % تعالت كما شاءت بنا وتباركت % % فجلت عن الإفهام وانقطع الخطو % % PageV01P1799 البحر : - 1(@)(@@) % يا صدق قوم عن جمالك قد رووا % % وعلى بديع صفات سيرتك احتووا % % 2(@)(@@) % لبسوا ثياب النور نورك في الدجى % % ومشوا بها وإليك عنهم قد لووا % % 3(@)(@@) % كشفوا القناع ولا قناع سوى السوى % % وبعذب منهلك الروي قد ارتووا % % 4(@)(@@) % وبوا ودكو نحوك انعطفوا وما % % سمعوا كلام العاذلين وإن عووا % % 5(@)(@@) % قامت بسرك في العيان ذواتهم % % وهم الذين إلى الفنا بك قد هووا % % 6(@)(@@) % شخصوا إلى أنوار ذاتك في الورى % % فإذا الجميع عن المغايرة انزووا % % 7(@)(@@) % أنت المداد وهم حرفوك خططت % % بك فيك فوق عروش نشأتم استووا % % 8(@)(@@) % وإذا انحرفت وأنت واو وجودنا % % ظهر العدى وبنارهم فيك اكتووا % % PageV01P1800 البحر : - 1(@)(@@) % يا من جمع الحسن جميعا وحوى % % رفقا بمتيم له فرط جوى % % 2(@)(@@) % عشقي لك في الكمال داء ودوا % % بالنور طفى النار وبالنار كوى % % 3(@)(@@) % دور % % 4(@)(@@) % هذا هو باطن وهذا ظاهر % % بالخلق هو اللطيف وهو القاهر % % 5(@)(@@) % فرد أحد له الجمال الباهر % % والناس لكل واحد فيه هوى % % 6(@)(@@) % دور % % 7(@)(@@) % منهم من يطلب الشهود الصافي % % والآخر يطلب الرضاب الشافي % % 8(@)(@@) % والآخر طالب لحظ وافي % % والآخر غير ذاك في الدين روى % % 9(@)(@@) % دور % % 10(@)(@@) % كاسات رحيقنا علينا دارت % % في كف سقاتنا التي قد جارت % % PageV01P1801 11(@)(@@) % فانظر بالقلب في عقول طارت % % من حيرتها لأجل غير وسوى % % 12(@)(@@) % دور % % 13(@)(@@) % أزكي صلوات ربنا الخلاق % % لازال مع السلام منه الباقي % % 14(@)(@@) % يأتي لنبينا وللآفاق % % من عبد غني عبادة منه نوى % % PageV01P1802 البحر : - 1(@)(@@) % عطشى العتيق من الجديد قد ارتوى % % لما به قصري على الماء استوى % % 2(@)(@@) % نهر جرى ويقال عنه أعوج % % وإن استقام كماله الراوي روى % % 3(@)(@@) % فجلست في قصري عليه وكان لي % % قلب به ولكل قلب ما 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms363# نوى % % 4(@)(@@) % ونظرت فيه إلى جهات أربع % % إطلاقها لي مطلق كل القوى % % 5(@)(@@) % ونسيمها ذاك اللطيف كأنه % % روح على جسد الفلاة قد احتوى % % 6(@)(@@) % والماء عذب رائق متدفق % % يطفى حرارات القلوب من الجوى % % 7(@)(@@) % نعمت ليالينا هناك مسرة % % وانحل قيد القلب من أسر السوى % % 8(@)(@@) % وكأنما أيامنا أعيادنا % % في سفح كاظمة على ذاك اللوى % % 9(@)(@@) % حيث السماع تهيجنا ناياته % % بالنفخ من داء الهموم هو الدوا % % 10(@)(@@) % حيث الغناء يكاد يبصر سامع % % بخطابه القدسي في وادي طوى % % PageV01P1803 11(@)(@@) % وتتابعت بشري السرور لجمعنا % % والقرب جاء وقد مضى يوم النوى % % 12(@)(@@) % لولا الهوى ما طاب لي عيش بها % % ما طاب لي عيش بها لولا الهوى % % 13(@)(@@) % والوقت عني للجماعة قائل % % ما ضل صاحبكم هناك وما غوى % % PageV01P1804 البحر : - 1(@)(@@) % ظهر النور من النور ولا % % نور إلا واحد ما انتقلا % % 2(@)(@@) % وهما سيان في الفرق كما % % إن ذا النورين شخص كملا % % 3(@)(@@) % وهما في الجمع شيء واحد % % والتفاصيل تحوز الجملا % % 4(@)(@@) % قول كن عين الذي قال غدت % % وبها القرآن فينا نزلا % % 5(@)(@@) % وجميع الكون في نشأته % % واحد ما قد علا أو سفلا % % 6(@)(@@) % وأنا أنت كما أنت أنا % % وبدا نجم ونجم أفلا % % 7(@)(@@) % والذي نعرفه أجمعه % % هو أنت انضم حتى حصلا % % 8(@)(@@) % ولقد أظهرت ما اكتمه % % لك إن كنت الذي قد عقلا % % 9(@)(@@) % نزل القرآن فرقانا لنا % % فتلوناه كما النور تلا % % 10(@)(@@) % وهو نحن الآن نبديه لكم % % كيف شئنا واضحا مكتملا % % PageV01P1805 البحر : - 1(@)(@@) % أيها الجاهل الذي ليس يدري % % ما يلاقيه بكرة وأصيلا % % 2(@)(@@) % كلما ازداد من سوى الله علما % % زاد شيطانه له تسويلا % % 3(@)(@@) % لا تغرنك الظواهر واترك % % عنك قالابه فتنت وقيلا % % 4(@)(@@) % وتأمل في كل شيء تشاهد % % كل شيء يفنى قليلا قليلا % % PageV01P1806 البحر : - 1(@)(@@) % إن الحروف إشارات المداد فلا % % حرف هناك سوى ذات المداد طلا % % 2(@)(@@) % طلا الحروف اللواتي صار صبغتها % % وهما وصبغته صارت وما انتقلا % % 3(@)(@@) % بطونها كان في غيب المداد كما % % ظهورها كان بالتقدير منه إلى % % 4(@)(@@) % وهي التقادير منه والشؤون له % % وليس ثم سواه فالهم المثلا % % 5(@)(@@) % وانهن سواه ولا تقل هي هو % % تخطى ولا هو أيضا هن مختبلا % % 6(@)(@@) % فإنه كان من قبل الحروف ولا % % حرف ويبقى ولا حرف هناك 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms364# ولا % % 7(@)(@@) % وهالك كل حرف في العيان سوى % % وجه المداد بمعنى ذاته جعلا % % 8(@)(@@) % فللحروف ظهور وهي خافية % % وذاك عين ظهور للمداد حلا % % 9(@)(@@) % والحرف ما زاد شيئا في المداد ولم % % ينقصه شيئا ولكن فصل الجملا % % 10(@)(@@) % وما تغير بالحرف المداد وهل % % مع المداد وجود للحروف إلا % % PageV01P1807 11(@)(@@) % إلا فحقق مقالي ما الوجود هنا % % سوى وجود مداد عند من عقلا % % 12(@)(@@) % وأينما انك حرف لم يزل معه % % مداده فاعقل الأمثال ممتثلا % % 13(@)(@@) % ونحن لم نضرب الأمثال فيه له % % وإنما هو للأمثال قد بذلا % % 14(@)(@@) % ونحن أمثاله اللاتي ضربن لنا % % في خلقه قد فهمناها ولا جدلا % % 15(@)(@@) % فكن بصيرا بأمر جل عارفه % % له المداد وأنواع الحروف جلا % % 16(@)(@@) % واعلم بأن مداد الحرف فاعله % % به محيط له فيه عليه ولا % % 17(@)(@@) % والحكم ليس سوى حكم الحروف وما % % لها وجود فحقق رتبة النبلا % % 18(@)(@@) % إن الوجود الحقيقي ذات خالقنا % % وهو الذي عز في سلطانه وعلا % % 19(@)(@@) % وهو المداد يمد الكل أجمعهم % % بذاته فهو فهيم كلهم كملا % % 20(@)(@@) % وذاته في سواها لا تحل إذا % % إذ لا سواها ولا فيها السوى حصلا % % PageV01P1808 21(@)(@@) % وإنما الكل سماها الشؤون له % % جيمعها فهو فيها طبق ما نقلا % % 22(@)(@@) % والكل منه إشارت يشير بها % % وما الإشارة إلا فعل من فعلا % % 23(@)(@@) % نحن الكتاب لأنا أحرف كتبت % % به على نفسه قد خطنا وتلا % % 24(@)(@@) % والكاتب الحق يمحونا ويثبتنا % % كما يشاء فلا نبغي به بدلا % % 25(@)(@@) % والروح عرش التجلي بالصفات بدت % % والذات منا ثمان عرشه حملا % % 26(@)(@@) % والنفس كرسيه السبع الطباق حوى % % مناهي الحفظ فالوهم الذي قبلا % % 27(@)(@@) % فالفكر فالعقل أيضا فالخيال بدا % % فالطبع فالحس فالأشياء قد شغلا % % 28(@)(@@) % والجسم فيها الأراضي سبعة ظهرت % % جلد فعرق فعضروف به اشتملا % % 29(@)(@@) % فالعظم ثم الغشا فالقلب داخله % % ثم الشغاف بحب القلب قد عدلا % % 30(@)(@@) % حتى العناصر فيها أربع عرفت % % صفرا دم بلغم سوداء قل مثلا % % PageV01P1809 31(@)(@@) % ثم المواليد فيها أربع ظفر % % شعر وقمل وإنسان المني تلا % % 32(@)(@@) % وكل واحدة مما ذكرت لها % % بالأصل منها اتصال قط ما انفصلا % % 33(@)(@@) % مراتب كلها عين الوجود بدت % % بها بشكل كبير واحد عملا % % 34(@)(@@) % ثم اقتضت إنها تبدو معددة % % في كثرة باختصار مرأة رجلا % % 35(@)(@@) % ولا 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms365# تعدد فيها عند عارفها % % لأنها حضرة فيها لقد نزلا % % 36(@)(@@) % أعني به الغيب غيب الذات وهو هنا % % محض الوجود وجود الحق منتقلا % % 37(@)(@@) % وهي انتقالاته بالاعتبار له % % تقلب في شؤون ضمنها جهلا % % 38(@)(@@) % الله أكبر عن هذا ومشبهه % % من العلوم وعن عال وما سفلا % % 39(@)(@@) % ولكن القول منا كشف رتبته % % لنا برتبة كشف حقق الأملا % % 40(@)(@@) % خذما بدا لك من قولي على أدب % % واسمع كلامي فإني أوضح السبلا % % PageV01P1810 41(@)(@@) % وما اختفى عنك فاكفف عنه قولك في % % سر وجهر ولا تجعل به زللا % % 42(@)(@@) % ودعه للكامل التحرير يعرفه % % لأنه ما ابتغى عن ربه حولا % % 43(@)(@@) % نحل النفوس لها الأجسام أودية % % ومن قلوب الورى كم أسكنت جبلا % % 44(@)(@@) % وكم تنقلت الأشجار من ملأ % % وما تعرش ممن جد أو هزلا % % 45(@)(@@) % يا نحل أوحى إليك الرب فاتخذي % % من الجبال بيوتا واسلكي ذللا % % 46(@)(@@) % وكل شيء سبيل الرب خلقته % % إليه في الناس من يمشي به وصلا % % 47(@)(@@) % هنالك العلم علم الله يخرج من % % بطونها اختلفت ألوانه عسلا % % 48(@)(@@) % بطونها حضرات الحق إذ هي قل % % ظهوره فهو منها لابس حللا % % 49(@)(@@) % لأنها هي تقديراته وبها % % يبدي الخلائق والأملاك والرسلا % % 50(@)(@@) % مراتب وشؤون فيه أجمعهم % % محققون وأما ليس فيه فلا % % PageV01P1811 البحر : - 1(@)(@@) % إذا ما سمعت الناي سواه منشد % % لينفخ فيه فاعتبر واكتسب حالا % % 2(@)(@@) % وقابل به يوم المقابلة التي % % تصحح منك النفس كشفا وإقبالا % % 3(@)(@@) % ودع عنك أهل اللهو فهو محرم % % عليهم كما قالوا وإن قولهم طالا % % 4(@)(@@) % فآدم ناي الله سواه نافخا % % من الروح فيه روحه مثل ما قالا % % 5(@)(@@) % وقد أظهر الأسماء منه معلما % % ملائكة أبدوا لهم فيه أقوالا % % 6(@)(@@) % ومن بعد ذا لما تبين فضله % % له سجدوا طوعا فنالواه آمالا % % 7(@)(@@) % خذ الأمر وافهم يا ابن ودي مقالتي % % وحقق لأصحاب الإشارة أمثالا % % PageV01P1812 البحر : - 1(@)(@@) % ردني الله له ردا جميلا % % فهو ربي لا أرى عنه بديلا % % 2(@)(@@) % أنا مشغول به في كل ما % % أنا مشغول به شغلا طويلا % % 3(@)(@@) % ولهذا لا تراني أرعوى % % من سواه أبدا قالا وقليلا % % 4(@)(@@) % لي بأكناف الحمى قلب شجي % % لم يطق عنه وإن شط الرحيلا % % 5(@)(@@) % ومطايا فكرتي طول الدجى % % تقطع البيد له ميلا فميلا % % 6(@)(@@) % يا 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms366# أخلائي وهذا جسدي % % لم يزل بالشام مطروحا عليلا % % 7(@)(@@) % لكن الصحة في القلب وإن % % بطل الصبر وأضحى مستحيلا % % PageV01P1813 البحر : - 1(@)(@@) % هم الضدان في الأشياء آلا % % إليه فاشبها في الكشف آلا % % 2(@)(@@) % وحقق أم أقول ولا تبالي % % ولا تخف العقوبة والوبالا % % 3(@)(@@) % هو الله الذي خلق البرايا % % له وهدى وأوسعهم ضلالا % % 4(@)(@@) % ونزه نفسه عن كل شيء % % بليس كمثله شيء تعالى % % 5(@)(@@) % فلا مخلوق في حس وعقل % % يشابه ربنا أبدا محالا % % 6(@)(@@) % كأن بخلقه الأشياء ربي % % يقول بأنني بك لن أنالا % % 7(@)(@@) % ولما تم ذا التنزيه منه % % وألزم في تحققه الرجالا % % 8(@)(@@) % أتى التشبيه مه لنا صريحا % % على حكم به ضرب المثالا % % 9(@)(@@) % بأنا كل شيء رفع كل % % خلقناه قرآءة من أحالا % % 10(@)(@@) % وقال كذاك وهو الله يعني % % لدينا في السموات اشتمالا % % PageV01P1814 11(@)(@@) % وفي الأرض انظروه وفي لظرف % % تفيد وذلك التنزيه حالا % % 12(@)(@@) % فبالتشبيه قل في الله شرعا % % وبالتنزيه قل أيضا كمالا % % 13(@)(@@) % ولا تعرض عن التنزيه ذاك ال % % ذي قد جاء عنه وقله قالا % % 14(@)(@@) % وحاصله بأن الذات غيب % % منزهة مقدسة جلالا % % 15(@)(@@) % ومن حيث الصفات وما تسمى % % به فهو المشبه لن يزالا % % 16(@)(@@) % كما قد قال وهو الأول اقرأ % % كذا والآخر اعرف ذا المقالا % % 17(@)(@@) % كذا والظاهر المعروف فينا % % كذا والباطن المجهول لالا % % 18(@)(@@) % فلا معروف إلا الله لكن % % تنزه إذ تشبه واستطالا % % 19(@)(@@) % هو المعروف في الدنيا وأيضا % % هو المعروف في الأخرى مآلا % % 20(@)(@@) % وليس سواه لا شرعا لدينا % % ولا عقلا فدع عنك الخيالا % % PageV01P1815 21(@)(@@) % وقل حق وبالأسماء خلق % % له ذات وأسماء تعالى % % PageV01P1816 البحر : - 1(@)(@@) % تمسك بغيب الغيب واترك سواه لا % % سواه إلي كم أنت في لبسة البلا % % 2(@)(@@) % ألم يقل الداعي لكم أنا ربكم % % وأنتم له قلتم بلا شبهة بلى % % 3(@)(@@) % نسيتم عهودا بالحمى أخذت له % % عليكم ليالي الذرفي زمن جلا % % 4(@)(@@) % قفوا ههنا يا سائرين إلى السوى % % فإن السوى عين المراد إذا انجلى % % 5(@)(@@) % إلا فامسحوا عين القلوب من القذى % % به تمتلوا منه وينكشف الملا % % 6(@)(@@) % وحلوا عقال العقل عن صور لها % % مصورها أبدي منوعة الحلي % % 7(@)(@@) % هو الحق لا أنتم وأنتم جميعكم % % هو الباطل الموهوم عن كلكم علا % % 8(@)(@@) % تقولون لا ندري سوانا ولا نرى 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms367# % % بأبصارنا إلا الحوادث تجتلى % % 9(@)(@@) % صدقتم بكم غيب الغيوب تلبست % % عليكم مجالي عينه فتحولا % % 10(@)(@@) % وقدزاغت الأبصار عنه وزاغت ال % % بصائر لما أن عصيتم تخيلا % % PageV01P1817 11(@)(@@) % فلو أنكم قمتم بطاعة أمره % % به وا تقيتم صادقين لأقبلا % % 12(@)(@@) % فسبحان من يرضى عن البعدان يشأ % % فيرضيه بالتوفيق للخير مجزلا % % 13(@)(@@) % وإن شاء يغضب وهو أمر مقدر % % قديما على كل أمرئ قد تفصلا % % 14(@)(@@) % حقائق علم مالها علل قضى % % بهن قديم قد تحققن أولا % % 15(@)(@@) % فكن مسلما لله ربك واستقم % % تجده رحيما منعما متفضلا % % 16(@)(@@) % وأنت له عبد وظيفتك الرضى % % ومالك معه أن ترى لك مدخلا % % 17(@)(@@) % فسلم له تسلم وكن مقبلا على % % أوامره واترك نواهي ماتلا % % 18(@)(@@) % وإياك لا تسأل لماذا ولا تقل % % أريد كذا منه ولا تقترح ولا % % 19(@)(@@) % وكن مثل سادات مضوا مخلصين لم % % يحولوا عن التقوى هم القادة الأولى % % PageV01P1818 البحر : - 1(@)(@@) % ربي من الماء خالق كل شيء حي % والنفس منك الكدر تجعل رشادك غي % 2(@)(@@) % فانظر إلى شاخصك واصفو وهياهي % % واعلم بأن حياتك وما وأنت الفي % PageV01P1819 البحر : - 1(@)(@@) % بأسماء رب العالمين ابتدائيا % % وبالحمد لا يحصى وبالشكر وافيا % % 2(@)(@@) % وكم من صلاة مع سلام تبركا % % أتى بهما عبد الغني موافيا % % 3(@)(@@) % على خير خلق الله طه وآله % % وأصحابه مع من لهم كان تاليا % % 4(@)(@@) % وبعد فهذا عقد در نظمته % % لمن كان في نيل الكمالات ساعيا % % 5(@)(@@) % فخذه بإخلاص وكن موقنا به % % ولا تك عن مضمونه متلاهيا % % 6(@)(@@) % وواظب عليه في الصباح وفي المسا % % به تدرك المأمول إن كنت داعيا % % 7(@)(@@) % وقل فيه يا ألله حقق مقاصدي % % وبالعفو يا رحمن كن لي معافيا % % 8(@)(@@) % وبالرحمة اغفر يا رحيم خطيئتي % % ويا ملك اجعلني بحكمك راضيا % % 9(@)(@@) % وللقلب يا قدوس قدس عن السوى % % وفي الحشر سلم يا سلام محاميا % % 10(@)(@@) % ويا مؤمن ارزقني الأمان من الردى % % وللحق كن لي يا مهيمن هاديا % % PageV01P1820 11(@)(@@) % وبالعز فارفع يا عزيز مكانتي % % وللكسر يا جبار فاجبر مؤاسيا % % 12(@)(@@) % وكبر عطائي منك يا متكبر % % ويا خالق اجعلني عن الشر لاهيا % % 13(@)(@@) % من النار يا باري أنلني براءة % % وصور مقامي يا مصور عاليا % % 14(@)(@@) % وللذنب يا غفار فاغفر تكرما % % وبالقهر يا قهار فارم الأعاديا % % 15(@)(@@) % إلى الخير 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms368# يا وهاب هب لي هداية % % تدوم ويا رزاق أجزل عطائيا % % 16(@)(@@) % وبالعلم يا فتاح فافتح على الذي % % لأمرك ألقى يا عليم المراسيا % % 17(@)(@@) % ويا قابض اقبضني على الحق مسلما % % ويا باسط ابسطني وكن لي مصافيا % % 18(@)(@@) % ويا خافض اخفض قدر من رام لي أذى % % ويا رافع ارفعني على الضد راقيا % % 19(@)(@@) % وذلل سريعا يا مذل من افترى % % علي وعزز يا معز جنابيا % % 20(@)(@@) % دعوتك فاسمع يا سميع شكايتي % % وأنت بصير يا بصير بحاليا % % PageV01P1821 21(@)(@@) % ويا حكم احكم بالذي أنت أهله % % ويا عدل كن لي دون غيرك واليا % % 22(@)(@@) % وباللطف عامل يا لطيف وأنت يا % % خبير فحالي لم يكن عنك خافيا % % 23(@)(@@) % سألتك حلما يا حليم فإن لي % % ذنوبا عظاما يا عظيم ضواريا % % 24(@)(@@) % بمغفرة نك يا عفور مساعدي % % وللشكر وفق يا شكور مراعيا % % 25(@)(@@) % وقدري كبريا كبير من التقى % % وبالخير أعل يا علي مقامنا % % 26(@)(@@) % وللقلب فاحفظ يا حفيظ وأنت يا % % مقيت فصير قوتي الذكر حاليا % % 27(@)(@@) % وكن أنت حسبي يا حسيب وأجل لي % % أمورا أشابت يا جليل النواصيا % % 28(@)(@@) % وبالحق حقق لي الكرامة منك يا % % كريم وكن لي يا رقيب مناجيا % % 29(@)(@@) % أجب لي دعائي يا مجيب تفضلا % % ويا واسع اجعلني لوجهك رائيا % % 30(@)(@@) % وبالحكمة افتح يا حكيم علي يا % % ودود فجد بالود لي منك صافيا % % PageV01P1822 31(@)(@@) % ومجد صفاتي يا مجيد لدي الورى % % ويا باعث ابعثني غدا منك ناجيا % % 32(@)(@@) % وحقق شهود القلب يا حق فيك يا % % شهيد وكن للوهم عني ماحيا % % 33(@)(@@) % وكلت أموري يا وكيل إليك يا % % قوي فكن عني الأعادي مقاويا % % 34(@)(@@) % ومتن فؤادي يا متين على التقى % % ووال عطائي يا ولي تواليا % % 35(@)(@@) % وكم لك عندي يا حميد محامد % % متى احص يا محصي ظننت تناهيا % % 36(@)(@@) % وبالفضل يا مبدي بدأت لناويا % % معيد علينا عد بفضلك ثانيا % % 37(@)(@@) % بك القلب يا محيي فأحى ومنه يا % % مميت أمت ما عاقه عنك راعيا % % 38(@)(@@) % ويا حي طيب لي حياتي وقم على % % أموري يا قيوم بالرفق كاليا % % 39(@)(@@) % ويا واجد اسعفني وأوجد لي المنى % % ويا ماجد اجعلني بمجدك ساميا % % 40(@)(@@) % وقلبي من الأغيار يا واحد اختطف % % ويا أحد امحق فانيا وابق باقيا % % PageV01P1823 41(@)(@@) % ويا قادر 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms369# اجل لي على الخير قدرة % % ومقتدر اجعل عنك سمعي واعيا % % 42(@)(@@) % وقدم مقامي يا مقدم بالتقى % % وللسوء أخر يا مؤخر كافيا % % 43(@)(@@) % ويا أول ارفعني إلى أوج سدرتي % % ويا آخر اكشف عن فؤادي التعاميا % % 44(@)(@@) % ويا ظاهر اجعلني بأمرك ظاهرا % % ويا باطن ارفع غفلتي والتلاهيا % % 45(@)(@@) % وفي الصدق يا والي أنلني ولا ية % % ويا متعالي منك هب لي معاليا % % 46(@)(@@) % ويا بر جد بالبر لي وعلي تب % % بفضلك يا تواب لاتك خازيا % % 47(@)(@@) % ومنتقم ابطش في أولي البغي واعف يا % % عفو عن الجاني وكن متلافيا % % 48(@)(@@) % إلى الحال فانظر يا رؤوف برأفة % % ويا صمد اقض حاجتي والأمانيا % % 49(@)(@@) % ويا مالك الملك انتصر لي على العدى % % ويا وارث اجعلني لغيرك ساليا % % 50(@)(@@) % ويا ذا الجلال ارفع حجاب بصيرتي % % والإكرام أكرمني وكن بي مباهيا % % PageV01P1824 51(@)(@@) % ويا مقسط اجعل قسطي الدين والهدى % % ويا جامع اجمعني عليك مواتيا % % 52(@)(@@) % وكن مغنيا لي يا غني عن الورى % % وللفقر يا مغني أزل بك واقيا % % 53(@)(@@) % رجوتك يا معطي فجد منك بالعطا % % ويا مانع امنعني عن السوء حاميا % % 54(@)(@@) % ويا ضار من كل المضرات وقني % % ويا نافع انفعني وعطي المساويا % % 55(@)(@@) % ويا نور فاكشف عني الجهل والعمى % % وذكرك يا هادي لنا اجعله شافيا % % 56(@)(@@) % وهب لفؤادي يا بديع بدائعا % % من الفتح يا باقي وحل المعانيا % % 57(@)(@@) % وكن مرشد لي يا رشيد إلى المنى % % وبالصبر وفريا صبور الدواعيا % % 58(@)(@@) % وأسألك اللهم يا خالق الورى % % ويا آمرا في العالمين وناهيا % % 59(@)(@@) % ويا باعث الأموات تكتب كل ما % % له فعلوا حتى تكون مجازيا % % 60(@)(@@) % بأسمائك الحسنى العظام التي لنا % % نبيك طه عنك قد كان راويا % % PageV01P1825 61(@)(@@) % وما قد تجلت فيه من كل مظهر % % سيأتي وما في الحال أو كان ماضيا % % 62(@)(@@) % وما في حروف الكائنات من الذي % % له نورك الفياض لا زال حاويا % % 63(@)(@@) % أجبني إلى ما قد دعوتك سيدي % % ومني تقبل منه ذي القوافيا % % 64(@)(@@) % وكن للذي يدعو بها حافظا وكن % % مجيبا له في كل ما كان ناويا % % 65(@)(@@) % وصل وسلم كل وقت وساعة % % صلاة وتسليما يفوق الغواليا % % 66(@)(@@) % وشرف وكرم خير تشريف اعتلى % % وأبلغ تكريم يطيب تلاقيا % % 67(@)(@@) % وفضل وعظم خير تفضيل ارتقى % % وأكمل 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms370# تعظيم تتابع ناميا % % 68(@)(@@) % وزد في الورى فخرا ومجدا وسؤددا % % ورفعة قدر دائما وتعاليا % % 69(@)(@@) % وبارك كما تختار أنت وترتضي % % مباركة في الهطل تحكي الغواديا % % 70(@)(@@) % وأعل علوا دام سرا وجهرة % % وأسعد كذا وامنن وأيد مواليا % % PageV01P1826 71(@)(@@) % على أحمد المخنار من نسل هاشم % % ومن حاء يروي بالهداية صاديا % % 72(@)(@@) % ومن رحم الله الوجود ببعثه % % وكرمنا طرا قريبا ونائيا % % 73(@)(@@) % ورضوان رب الناس عن كل آله % % وأصحابه جمعا خفيا وباديا % % 74(@)(@@) % وتابعهم بالخير في كل مدة % % ومن في البرايا قد أجاب المناديا % % 75(@)(@@) % وأهل الصفا بالله في كل مشرب % % لدينا ومن خلوا العصور الخواليا % % 76(@)(@@) % وعمم جميع المسلمين إناثهم % % وذكرانهم حتى مطيعا وعاصيا % % 77(@)(@@) % مدى الدهر ما صال الصباح على المسا % % وما كرت الأيام تتلو اللياليا % % PageV01P1827 البحر : - 1(@)(@@) % اصبر على ضر البلايا % % فالصبر من إحدى العطايا % % 2(@)(@@) % ودع الحسود فإنه % % متعرض بك للمنايا % % 3(@)(@@) % في قلبه نار وإن % % وافاك ضحاك الثنايا % % 4(@)(@@) % لا تغترر بكلامه % % لك في جوانحه خبايا % % 5(@)(@@) % ولربما حسراته % % لك أهلكته على الحكايا % % 6(@)(@@) % زد في علومك وارتفع % % عنه وكن حسن السجايا % % 7(@)(@@) % واسكن مدينات العلى % % ودع الحواسد في القرايا % % 8(@)(@@) % ليس النفوس الكاسيا % % ت معارفا مثل العرايا % % 9(@)(@@) % والمستقيمات لطري % % قة ا ليس كالعوج الحنايا % % 10(@)(@@) % أهل النفاق مضوا ول % % كن هاهنا منهم بقايا % % PageV01P1828 11(@)(@@) % إن الذين رأوا القبي % % ح بنا لهم كنا مرايا % % 12(@)(@@) % حفروا ركايا مكرهم % % حسدا فماتوا في الركايا % % 13(@)(@@) % واستهزأوا لطهارة % % فينا وهم خبث الطوايا % % 14(@)(@@) % ولنا الأذى قد أكثروا % % ومن الأسى أبدوا خفايا % % 15(@)(@@) % وإلا فترافي حقنا % % ما بينهم مثل الهدايا % % 16(@)(@@) % ومن الهنا ومن السرو % % ر لنا لقد ملئت زوايا % % 17(@)(@@) % ولنا البشارة قد أتت % % من خير من ركب المطايا % % 18(@)(@@) % فيها الحديث مسلسل الإ % % سناد مرفوع المزايا % % 19(@)(@@) % للديلمي يف مسند الفردوس عن خير البرايا % % 20(@)(@@) % قد قال ساعات الأذى % % يذهبن ساعات الخطايا % % PageV01P1829 البحر : - 1(@)(@@) % أيها السائر بالركبان حي % منزلا فيه لذات الخال حي % % 2(@)(@@) % واحبس العيس علينا ساعة % % عل ميت الشوق أن يصبح حي % 3(@)(@@) % وبعهدي أن لي قلبا وقد % % ذاب حتى قد جرى من مقلتي % % 4(@)(@@) % وجيوش الشوق لما هجمت % % فر صبري ولوى عني لي % 5(@)(@@) % ليت سكان النقى لو سمحوا % % ليتهم لو 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms371# عطفوا يوما علي % 6(@)(@@) % ما لقلبي ولهم يوم النوى % % أنه ضاع بذياك اللوي % 7(@)(@@) % شفني السقم ولم يشف الرجا % % كبدي والروح راحت من يدي % 8(@)(@@) % وكأين من ولوع لم يفد % % وكأين من دموع وكأي % 9(@)(@@) % هذه الدار وهذا شغفي % % في هوى ساكنها والصبر عي % 10(@)(@@) % كلما شمت بريقا لامعا % من حمى نجد شواني الشوق شي % PageV01P1830 11(@)(@@) % ليتني نلت مناي بمنى % % ليتني من وصلهم فزت بشي % % 12(@)(@@) % رجع الترب إلى الترب فها % % وسرى النور إلى النور فهي % % 13(@)(@@) % والذي أعرف لا أعرفه % % واختفى مذ لاح من خلف الخبي % 14(@)(@@) % فدنا بل فتدلى لي فغدا % % قاب قوسين فمني وإلي % 15(@)(@@) % نسبة صلية أ فرعية % % أرث مبعوث إلينا من قصي % 16(@)(@@) % وهي سر علق الروح به % % يوم لا يوم طوى الا غيار طي % 17(@)(@@) % وطوايا السر بالسر انطوت % % صحت لما انتشرت يا آل طي % 18(@)(@@) % اسفر البرقع والوجه فما % % عنه يثنيني ثلاث وثني % 19(@)(@@) % واحد والكل فيه واحد % % حب ليلى وحنين للحمي % 20(@)(@@) % وهوى بالطرف يحوي حورا % % وغرام بالذي تحت القبي % PageV01P1831 21(@)(@@) % وبهيفاء كبدر طالع % % وبظبي مائس القد حلي % 22(@)(@@) % وهي أسماء لديهم سميت % % والمسمى دونهم ذاك لدي % 23(@)(@@) % ينظر المحبوب من طاقته % % مالنا من طاقة في ذا الهوي % 24(@)(@@) % أبعد الصبر وأدنى الشوق مذ % % أمسك القلب وأجرى دمعتي % % 25(@)(@@) % إن بدا فيه فنينا وإذاوقريب وبعيد هو عن نشأة الكل وفيها متزي % ما اختفى عنا بقينا يا أخيسقط بيت ص % % 26(@)(@@) % وهو في مكتنا كعبتنا % % وبه الجسم كداء وكدي % 27(@)(@@) % لا تظنوا أننا فيه ولا % % هو فينا أي جهل ذاك أي % 28(@)(@@) % والمعاني كلها منا وعن % % شاخص الاسم لشمس الذات في % 29(@)(@@) % وقرا فينا علينا ذكره % % مثل طه قد قرا عند أبي % 30(@)(@@) % بحر علم نحن فيه سفن % % من يرمه للبلايا يتهي % PageV01P1832 31(@)(@@) % كلما شئنا غرقنا فيه عن % % كل شيء ولنا الداء دوي % 32(@)(@@) % أنا للسالك أم وأب % % فتمتع بعلومي يا بني % 33(@)(@@) % ولنا الحق على العرش استوى % % وبنا العرش على الماء السوي % 34(@)(@@) % قبلتي الكل ونور المصطفى % % في صلاتي وهو أعلى قبلتي % 35(@)(@@) % وإذا بحت بسري قلت لا % % ذا ولا وذاك ولكن وجه مي % 36(@)(@@) % إن أقم قمت إلى طلعتها % % متخل عن سواها 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms372# متهي % 37(@)(@@) % وإذا أومأت أومأت لها % % في ركوعي وسجودي للثري % % 38(@)(@@) % وتراب لتراب ينحني % % حكم أمر من سواه الرشد غي % 39(@)(@@) % والمصلى هي بالذات لنا % % رحمة عمت وخصت كل شي % 40(@)(@@) % فعموم هي نار كثفت % % وخصوص لطفت نور الضوي % PageV01P1833 41(@)(@@) % وشمال ويمين وهما % % كفتا الميزان كلتا فرقتي % 42(@)(@@) % وفرقة تعلو وأخرى سفلت % % كي يحيط الأمر بالضدين كي % % 43(@)(@@) % فأناس لذة القرب لهم % % وأناس عندهم بالبعد كي % 44(@)(@@) % وكلا الفعلين منصوب له % % مثل فعل نصبته لام كي % % 45(@)(@@) % عدة الواحد قد عجلها % % وبعيد لي من الواحد لي % 46(@)(@@) % جنة العلم الإلهي هنا % % نحن نيها وهي أعلى جنتي % 47(@)(@@) % وغدا في جنة القدرة من % % شهوات النفس أنواع الحلي % 48(@)(@@) % ولنا في نشأتينا دائما % % جنة الذات ومرقاة رقي % 49(@)(@@) % وحياة جنة عالية % % دون أهل الكفر فيها كل حي % 50(@)(@@) % وبسمع جنة لي وكذا % % بصر أقطف منها زهرتي % PageV01P1834 51(@)(@@) % وهنا جنة خلد للإرا % % دة فيها ماصبا فيها الصبي % 52(@)(@@) % وكلام الله عندي جنة % % ذات أنهار وأشجار وفي % 53(@)(@@) % وقصور وسرور دائم % % ونعيم بمهاة فظبي % 54(@)(@@) % فهي جنات ثمان دخلت % % صورتي فيهن للحي تحي % 55(@)(@@) % رؤية بالعين قد حققتها % % لا خيال الفكر أو رؤيا الكري % 56(@)(@@) % واستجابت لي بما أملته % % منيتي بعدا للتيا والتي % 57(@)(@@) % حرت في أنفس أمر حيث لي % % نفس حر هي نور في دجي % 58(@)(@@) % أخذت من كل شيء حظها % % تتفيا بظلالات إلا شي % 59(@)(@@) % مثل طه قد حوى بنت أبي % % بكر الصديق مع بنت حيي % 60(@)(@@) % فادخلوا يا قوم روضي إنني % % في مقام فائح منه الشذي % PageV01P1835 61(@)(@@) % واشربوه كأس خمر من يدي % % وارضعوه لبنا من ذا الثدي % 62(@)(@@) % أنا بدر الليلة الظلماء لا % % صوت إلا وهو من صوتي صدي % 63(@)(@@) % كل من صغرني كبرني % % مثل تصغير علي يا علي % 64(@)(@@) % والذي يجهلني يعرفني % % ما بصير قدره قدر العمي % 65(@)(@@) % والذي يخرج من فكرته % % علمه بالنزح ماء من طوى % 66(@)(@@) % ليس كالنازل فيه علمه % % من سحاب الغيث سيل ذو غني % 67(@)(@@) % فارفع البردة من نفسك عن % % وجهنا تبصرنا دون الغطي % 68(@)(@@) % وادخل الميدان ميدان الوفا % % تعرف المقدام من كل فتي % 69(@)(@@) % لا تكن أعمى وتنفي رؤية ال % % نور لا يدري الوغى إلا الكمي % 70(@)(@@) % ولبيب يرعوى 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms373# من كلمة % % والغبي يحتاج قرعا بالعصي % PageV01P1836 71(@)(@@) % بالثنا أحسنت لما أحسنوا % % واللهى من شأنها فتح اللهي % 72(@)(@@) % ثم لما عسكر العقل انقضى % % جاء جيش الكشف خفاق اللوي % 73(@)(@@) % واستعديت لأمر نلته % % وتهيأت إلى السر المهي % 74(@)(@@) % وتذكرت عهودا سلفت % % بالتجلي يوم إحدى نشأتي % % 75(@)(@@) % واللييلات التي مرت لنا % % ينقضي العمر ولا أنسي الليي % % 76(@)(@@) % ولعبنا بنغير الغيريا % % يا عمير العقل ما فعل النعي % 77(@)(@@) % وأماطت منيتي عن وجهها % % فانتهى مني عن الوهم النهي % 78(@)(@@) % كنت سفليا وعلويا بها % % علويا صرت في أمر يعي % 79(@)(@@) % ثم جاء النور بالنور خلا % % فة شهم هاشمي لا أمي % PageV01P1837 البحر : - 1(@)(@@) % ملك يملأ الوجود % % ثلثه لاح للعيان % % 2(@)(@@) % يا مولاي % % يا مولاي % % 3(@)(@@) % ثم ثلثاه بالشهود % % أوضح الكشف والبيان % % 4(@)(@@) % يا مولاي % % يا مولاي % % 5(@)(@@) % مفرد منه لي يجود % % بالعطايا والامتنان % % 6(@)(@@) % يا مولاي % % يا مولاي % % 7(@)(@@) % جاءني والورى رقود % % يمنح الوصل والأمان % % 8(@)(@@) % يا مولاي % % يا مولاي % % 9(@)(@@) % دور % % 10(@)(@@) % هات حدث أيا نديم % % عن سنا طلعة الحبيب % % PageV01P1838 11(@)(@@) % يا مولاي % % يا مولاي % % 12(@)(@@) % وأدرك خمرنا القديم % % كأسها يكسر اللبيب % % 13(@)(@@) % يا مولاي % % يا مولاي % % 14(@)(@@) % ذاب في حانها الكليم % % وبها عبدها منيب % % 15(@)(@@) % يا مولاي % % يا مولاي % % 16(@)(@@) % إنني حافظ العهود % % في هوى الأوجه الحسان % % 17(@)(@@) % يا مولاي % % يا مولاي % % 18(@)(@@) % دور % % 19(@)(@@) % صل رب على الرسول % % بالتحيات والسلام % % 20(@)(@@) % يا مولاي % % يا مولاي % % PageV01P1839 21(@)(@@) % خير من خص بالوصول % % وحبي أشرف المقام % % 22(@)(@@) % يا مولاي % % يا مولاي % % 23(@)(@@) % فيه عبد الغني يقول % % رائق الشعر والنظام % % 24(@)(@@) % يا مولاي % % يا مولاي % % 25(@)(@@) % مظهرا صنعة الجدود % % في الورى سادة الزمان % % 26(@)(@@) % يا مولاي % % يا مولاي % % PageV01P1840 البحر : - 1(@)(@@) % ربما يكذب حسادي علي % بكلام السوء منسوبا إلي % 2(@)(@@) % فيدسون نظاما منهم % % في نظامي ويحيلون علي % 3(@)(@@) % أو يدسون بنثري نثرهم % % ذلك الكفر ويلقون لدي % 4(@)(@@) % وأنا ما قلت شيئا خالف ال % % شرع شرع المصطفى نسل قصي % 5(@)(@@) % لا ولا أقبله إن سمعت % % ذاك إذ ناي ولو من أبوي % 6(@)(@@) % غاية الأمر لنا في حالنا % % كلمات ظهرت من شفتي % 7(@)(@@) % خصنا فيه تجلى ربنا % % نحن ندريها بذوق يا أخي % 8(@)(@@) % لم تخالف شرع طه المصطفى % % عند من بالله موجود وحي % 9(@)(@@) % وذوو الغفلة لا تفهمها % % أبدا بعد اللتيا واللتي % 10(@)(@@) % فاتركوها يا أخلائي 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms374# لنا % % ربما عنكم طواها الله طي % PageV01P1841 11(@)(@@) % إنما نحن وأنتم خلقه % % وهو مولى في يديه كل شي % 12(@)(@@) % وكلام واحد يفهم من % % لفظه رشد كما يفهم غي % 13(@)(@@) % وانظروا القرآن حق كله % % فهمت منه أناس فهم عي % 14(@)(@@) % وبذاك الفهم فيه اختلفوا % % فرقا شتى وما فازوا بري % 15(@)(@@) % وكلام الله لا يشبهه % % من كلام الناس شيء يا بني % 16(@)(@@) % مع هذا فهموا منه الخطا % % ولهم قطع به من غير لي % 17(@)(@@) % ويضل الله قف قال به % % وبه يهدي كثيرا فلتهي % 18(@)(@@) % وكلام العارفين المختفي % % منه ما ينكره القلب العمي % 19(@)(@@) % وحدة الحق التي قد حققت % % كل شيء وبها الشيء ليس شي % 20(@)(@@) % كل من قد قال عن شيء إذا % % أشرق النور عليه الضوي % PageV01P1842 21(@)(@@) % إنه نور فقد أخطأ ما % % هو نور بل منير وهو في % 22(@)(@@) % ظلمة تبدو وتخفى بالذي % % خلفها وهو الوجود الحق حي % 23(@)(@@) % فانظروا واعتبروا ما قلته % % إنه غاية شيء في يدي % PageV01P1843 البحر : - 1(@)(@@) % قوموا أخبروا عن غرامي يا عريب الحي % بأنني في الهوى ميت بصورة حي % 2(@)(@@) % يا من يؤذن لهم لما ينادي حي % لا تنس دار الحبائب قف وعني حي % PageV01P1844 البحر : - 1(@)(@@) % من يخبر القوم عني يا كرام الحي % بأن نفسي لقد ماتت وقلبي حي % 2(@)(@@) % بالله ذاك الحمى النجدي عني حي % وقل على الوصل يا حادي الركائب حي % PageV01P1845 البحر : - 1(@)(@@) % وما أظنك تجد من بعد هذا شي % لكن تعطل وتنفي للإله الحي % 2(@)(@@) % وكل هذا علامه للشجر كالفي % فاعرف كلامي وخلي عنك هذا الغي % PageV01P1846 البحر : - 1(@)(@@) % دارريا يا حسنها دارريا % % ساقت البسط والسرورا ليا % % 2(@)(@@) % قم بنا نغتنم أويقات أنس % % عندها ثم بكرة وعشيا % % 3(@)(@@) % واخبر القوم بالذي هو فيها % % من تجل بعيد من مات حيا % % 4(@)(@@) % ثم نادي بين الأحبة عني % % في اتباعي وقل لقلبك هيا % % 5(@)(@@) % هذه حضرة الهوى والتصابي % % تنبت الرشد والضمان عليا % % 6(@)(@@) % دار محبوبة القلوب تجلت % % فراينا للعشق أمر جليا % % 7(@)(@@) % تقذف الروح من مكان خفي % لا ترى مثله مقامه حفيا % % 8(@)(@@) % كان موسى بها الكليم وعيسى % % ناطق المهد حين كان صبيا % % 9(@)(@@) % وهي ريا كما تسمت رأينا % % ماءها ترتوي به الروح ريا % % 10(@)(@@) % عشقتها رجالنا في سواها 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms375# % % فإذا أسفرت محتهم سويا % % PageV01P1847 11(@)(@@) % كل من جاءها تبدت عليه % % بنقاب السوى فكان نجيا % % 12(@)(@@) % حيث لم يدر وهي تدري ولكن % % ستر الكون أمرها المقضيا % % 13(@)(@@) % عش نديمي في ظلها كيف كانت % % وترقى بها المقام العليا % % 14(@)(@@) % وتأدب فإنها فيك جلت % % عنك تبديك آمرا ونهيا % % 15(@)(@@) % وهواها بها يسوق إليها % % والسوي يقذف المكان القصيا % % PageV01P1848 البحر : - 1(@)(@@) % لله ليلتنا في صحن صحنايا % % لما امتلا بالصفا البسط لي هايا % % 2(@)(@@) % وحين زال العنا عنا الذي عايا % % صرنا ننادي لإقبال الهنايايا % % PageV01P1849 البحر : - 1(@)(@@) % معرفة الله عند عارفه % % كيفية ليس تلك كميه % % 2(@)(@@) % فإن كمية الذي هو في % % عقد الجميع اقتضى لكيفيه % % 3(@)(@@) % مجهولة تلك عند عاقلهم % % من حيث ما عنه تكشف النية % % 4(@)(@@) % حتى يمن الإله خالقهم % % بالفتح في مغلق الأنانية % % 5(@)(@@) % ويدرك العقل ما يقول إذا % % قال ولا تعتريه نفسية % % 6(@)(@@) % حالة نفس بعكس ما نطقت % % من جهلها الصرف بالإضافية % % 7(@)(@@) % فإن وفت بالعهود من قدم % % يوم بلى ذاك للربوبية % % 8(@)(@@) % هنالك الصدق في المقال ولا % % كذب وإلا فهي المجوسية % % PageV01P1850 البحر : - 1(@)(@@) % إنني غير من أحب وإني % % عينه أن فنيت بالكلية % % 2(@)(@@) % وفنائي بأنني منه فعل % % بي أشارت صفاته الأزلية % % 3(@)(@@) % وإذا ما فنيت لم أك شيئا % % طبق آيات ربنا الأقدسية % % 4(@)(@@) % وفنائي هو الرجوع لعلم % % أزلي في حضرة أبدية % % 5(@)(@@) % ووجودي الذي ترون وجودي % % بالكلام القديم حسب القضية % % 6(@)(@@) % وهو قول الإله كن فيكون ال % % شيء أي ما يشاؤه في البرية % % 7(@)(@@) % يا وحيد الوجود مالك ثان % % غير أنا شؤونك العدمية % % 8(@)(@@) % لك فينا معية قلت عنها % % معكم وهي رتبة ألمعية % % 9(@)(@@) % كيفما شئت كنت بي وبغيري % % ظاهرا للمشاعر الوهمية % % 10(@)(@@) % ولك الأمر لا لنا وعلينا % % منك حكم في كل فعل ونية % % PageV01P1851 11(@)(@@) % وعلى كل حالة نحن فيها % % لزمتنا أحكامها الشرعية % % 12(@)(@@) % إن صحونا من سكرة الجمع أما % % إن سكرنا فالسكر غيب الهوية % % 13(@)(@@) % حالة تعتري ذوي الصدق منا % % ليس تخفى على النفوس الزكية % % PageV01P1852 البحر : - 1(@)(@@) % ربي الذي ليس له ماهيه % % وما تعينت له هوية % % 2(@)(@@) % بل هو حق مطلق ليس له % % قيد بوجه لا ولا كيفيه % % 3(@)(@@) % لأ جل هذا لا مكان لا ولا % % زمان يحويه ولا أينيه % % 4(@)(@@) % لا تقدر العقول 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms376# أن تدركه % % بها ولا بالفكرة القوية % % 5(@)(@@) % وهو المحيط بالبرايا كلهم % % من كل وجه وله المعية % % 6(@)(@@) % له صفات مثله قديمة % % قائمة بذاته العلية % % 7(@)(@@) % ومثلها أسماؤه الحسنى علت % % وعلمه المحيط بالبرية % % 8(@)(@@) % وكل شيء هو عالم به % % وبالذي يخفيه في الطويه % % 9(@)(@@) % وكلنا نحن عبيده وقد % % أكرمنا بالملة المرضيه % % 10(@)(@@) % ارسل فينا المصطفى نبينا % % يحكم بالشريعة المضية % % PageV01P1853 11(@)(@@) % يعامل الكل كما أرداه % % بمقتضى ألطافه الخفية % % 12(@)(@@) % خالقنا وخالق أفعالنا % % وجاعل أعمالنا بالنيه % % 13(@)(@@) % وهو إلهنا ولا نعرفه % % إلا بخلق نفسنا الزكية % % 14(@)(@@) % فنفسنا نعرفها بأنها % % فعل له وتمت القضية % % PageV01P1854 البحر : - 1(@)(@@) % إلى الذات سيري في مراتب أسماء % % بصورة مزج النار في مع الماء % % 2(@)(@@) % يهنك الآن إن بعثت بخير % % لتجلى أياتك المرضيه % % 3(@)(@@) % فاستم أنت حيثما الآن واعلم % % إنما الأمر طبق ما في القضيه % % 4(@)(@@) % % % 5(@)(@@) % أشكر الله خالقي في البرية % % سائر الوقت بكرة وعشية % % 6(@)(@@) % وهو شكر الإله لا هو شكري % % بتجلي الشكور رب البرية % % 7(@)(@@) % إنني كنت حائرا فهداني % % لمقامات سره الأقدسية % % 8(@)(@@) % أترقي به له كل حين % % من زمان مضي بأمر المعية % % 9(@)(@@) % كاشفا لي عنه وعن كل شيء % % فتحققت بالمعاني الخفية % % 10(@)(@@) % وتيقنت أنه هو لا ما % % كنت أدري وزالت الغيرية % % PageV01P1855 11(@)(@@) % فأنا ذاك فعله وهو ربي % % فاعل الأمور عندي جلية % % 12(@)(@@) % فأتاني من حضرة الشيخ شيخي % % وهو محيي الدين العلوم السنية % % 13(@)(@@) % خبر من لسان خدن صديق % % بالتهاني في الحالة العينية % % 14(@)(@@) % قد أتتني من الإله تعالى % % بغتة وهي لم تزل كشفيه % % 15(@)(@@) % صرت فيها محققا وهي عندي % % عذبة لذة المذاق شهية % % 16(@)(@@) % فأتاني الآتي يقول ثلاث % % هن أبيات شيخنا المحيويه % % 17(@)(@@) % واحدا قد نسيت منها وقال ال % % شيخ خذها مني إليه هدية % % 18(@)(@@) % خذ لعبد الغني كلامي هذا % % فأتاني بيتان منها عليه % % 19(@)(@@) % وهما قوله يريد خطابي % % بالتهاني للرتبة الوهبية % % 20(@)(@@) % يهنك الآن أن بعثت بخير % % لتجلي آياتك المرضية % % PageV01P1856 21(@)(@@) % فاستقم أنت حيثما الآن واعلم % % إنما الأمر طبق ما في القضية % % PageV01P1857 البحر : - 1(@)(@@) % أبى الذات سيري في مراتب أسماء % % بصورة مزج النار في مع الماء % % 2(@)(@@) % أنا الهيكل المجموع من كل حضرة % % مقدسة كالبدر في جنح ظلماء % % 3(@)(@@) % ألمت بنا ذات البراقع والورى % % نيام فأبدت وجهها بعد 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms377# إخفاء % % 4(@)(@@) % أماطت وكنا بالعشي لثامها % % فأصبحت الأنوار تشرق للرائي % % 5(@)(@@) % إذا كانت الأكوان آثار فعلها % % نقول تجلت بالدواء وبالداء % % 6(@)(@@) % ألا أنها غيب الغيوب وأنها % % شهادة داني في الشهادات أو نائي % % 7(@)(@@) % أهان الهوى قوما بها قد تولعوا % % فعزت عليهم حين جاؤوا بأهواء % % 8(@)(@@) % إشارات أحوال رموز حقائق % % لوائح تقريب بدائع إيماء % % 9(@)(@@) % أبانت عن الغيب المقدس للذي % % تعلقه باللام فيها وبالباء % % 10(@)(@@) % إضافية تبدو فتخفى بنورها % % وتبدو فيخفى شاخص خلف أفياء % % PageV01P1858 البحر : - 1(@)(@@) % بتجلي محاسن المحبوب % % شغف في الورى جميع القلوب % % 2(@)(@@) % بدرتم سحابه كل شيء % % نتراآه من بروج الغيوب % % 3(@)(@@) % بهرتنا صفاته ففنينا % % وتساوى شروقه بالغروب % % 4(@)(@@) % باؤها تحتها الحوادث منه % % نقطة أسفرت عن المطلوب % % 5(@)(@@) % باسمه نحن في مراتب ذات % % تتجلى بشأنها خمر كوب % % 6(@)(@@) % بأبي طلعة شخصت إليها % % حين لاحت فلذلي مشروبي % % 7(@)(@@) % بادرتني بيوسف الحسن منها % % لأراها بنا ظري يعقوب % % 8(@)(@@) % بعد وجدي لا وجد فيها لصب % % فهو وجد مكفر للذنوب % % 9(@)(@@) % بهواها تعبد القوم قبلي % % وهو ديني به انجلاء كروبي % % 10(@)(@@) % بنت عنها ولم تبن هي عني % % منعش لي نسيمها بالهبوب % % PageV01P1859 البحر : - 1(@)(@@) % توبة النفس في الهوى أن تموتا % % فتنال المنى وتدرك قوتا % % 2(@)(@@) % تخذتها مليحة الكون سترا % % مسدلا عند غيرها ممقوتا % % 3(@)(@@) % تتجلى بها الغيوب عليها % % فتنير اللاهوت والناسوتا % % 4(@)(@@) % تظهر الذات خلفها بصفات % % هي كانت صفاتها والنعوتا % % 5(@)(@@) % تاه قوم فحاولوا الكشف عنها % % بقواها فأثبتوها ثبوتا % % 6(@)(@@) % تبعوا العقل فاختفى السر لما % % أبدلوا من داودها جالوتا % % 7(@)(@@) % تلك لو حاولوا الفنا وجدوها % % شبحا في ظهورها منحوتا % % 8(@)(@@) % تمرة قد طابت وماء طهور % % لا يشمون مسكها المفتوتا % % 9(@)(@@) % تبهر العقل أن أميطت فزالت % % عن سنا وجهها الذي لن يفوتا % % 10(@)(@@) % تبت العصبة التي جهلتها % % فأرتهم بسحرها هاروتا % % PageV01P1860 البحر : - 1(@)(@@) % ثمرات على غصون الحوادث % % بعثتها من الغيوب بواعث % % 2(@)(@@) % ثم لاحت وحيدة بعدما قد % % كثرت في أطايب وخبائث % % 3(@)(@@) % ثمل القوم من شراب هواها % % حيث كانوا على الفناء مواكث % % 4(@)(@@) % ثبت المنتفي بها واستقلت % % في البرايا الجبال وهي ربائث % % 5(@)(@@) % ثلثتني بأمرهاب وهو فرد % % فبدا واحد وثان وثالث % % 6(@)(@@) % ثقلت في النزول بين قلوب % % وغيوب للأخفياء إلا شاعت % % 7(@)(@@) % ثاويات صفاتها في شؤون % % كالمثاني بلحنها والمثالث % % 8(@)(@@) % ثب 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms378# إليها من السوى يا نديمي % % وتشبث بها ولا تك لاهث % % 9(@)(@@) % ثلجت بالعلوم فيها نفوس % % واطمأنت بها فليست تباحث % % 10(@)(@@) % ثمد الماء حظ غيري منها % % وأنا لا انتهاء لي في الموارث % % PageV01P1861 البحر : - 1(@)(@@) % جل وجه بنوره الوهاج % % ضاء ليل من الحوادث داجي % % 2(@)(@@) % جمعتني عليه منه فروق % % هي بيني وبينه في التناجي % % 3(@)(@@) % جبرت كسر نشأتي فالتقينا % % يوم حرب النفوس بين العجاج % % 4(@)(@@) % جوهر العلم غصت فيه عليه % % وهو بحر ملاطم الأمواج % % 5(@)(@@) % جامع للكمال والنقص شمس % % هي بالنشأتين في أبراج % % 6(@)(@@) % جاء منهاإ لى النفوس رسول % % فانمحت فيه ليلة المعراج % % 7(@)(@@) % جسد حشوه نوافث أمر % % هن أرواحه سرت في المزاج % % 8(@)(@@) % جن عقلي بذات خدر تجلت % % بي فشاهدت هيكلا من عاج % % 9(@)(@@) % جارحات العيون منها لقلبي % % حين صادته لم يكن بالناجي % % 10(@)(@@) % جمحت كلما أتيت بنفسي % % وبها إن أتيت إني المناجي % % PageV01P1862 البحر : - 1(@)(@@) % حمائم شوق في الغصون تنوح % % تسر هواها تارة وتبوح % % 2(@)(@@) % حجازية شامية تألف الغنا % % فتغدو به في غيبها وتروح % % 3(@)(@@) % حديث الهوى عني روته مسلسلا % % وما هي إلا للمتيم روح % % 4(@)(@@) % حداة المطايا بالقلوب رويدكم % % إلى الحي سالت للقلوب جروح % % 5(@)(@@) % حمى الغور لاحت بالعشي بروقه % % ونشر الخزامي بالنسيم يفوح % % 6(@)(@@) % حويت علوما بالتجلي نفيسة % % وطرفي إلى ما فوق ذاك طموح % % 7(@)(@@) % حفيظة عهدي لا فقدت التفاتهاحظيت بها بعد الفنا في وجودها وقد كان لي منها هناك فتوح % إلي فتبدو في الحشى وتلوحسقط بيت ص % % 8(@)(@@) % حميدة فعل بالجميع وإنما % % يرى السوء من عنها لديه نزوح % % 9(@)(@@) % حياة وعلم قدرة وإرادة % % غبوق لنا منها بها وصبوح % % PageV01P1863 البحر : - 1(@)(@@) % خلاف الجود الصرف فالعدم الأخ % % وبينهما للمكن المحض برزخ % % 2(@)(@@) % خبير بكل الكائنات وجودها % % فيبدو ويخفى ثم يوحى وينسخ % % 3(@)(@@) % خلوت به والكون كالليل مظلم % % ولكنه ليل عن النور يسلخ % % 4(@)(@@) % خفاء لنا منه ظهور حبيبنا % % وينبوع قلبي بالحقائق ينضخ % % 5(@)(@@) % خمار عن الوجه الجميل أميط لي % % فأصحبت أسم في هواه وأشمخ % % 6(@)(@@) % خذ العفو عنه يا ابن ودي فإنما % % وجودك ذنب أنت منه موسخ % % 7(@)(@@) % خطبت عروس الخدر والنفس مهرها % % فأد إليها مهرها لا توبخ % % 8(@)(@@) % حفيفا وخذ منها ثقيلا هو المنى % % وفوق المنى وجه بطيب 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms379# مضمخ % % 9(@)(@@) % خفافيش قوم غافلين بهم عمى % % عن النور نور الشمس في الجهل تصرخ % % 10(@)(@@) % خصمت بها أقوالهم في اضطرابهم % % عليها وإني من ثبير لأوسخ % % PageV01P1864 البحر : - 1(@)(@@) % دب سر الوجود بالمفقود % % فبدا للعيان كالموجود % % 2(@)(@@) % دع حديث الحدوث واذكر قديم ال % % ذكر عندي وهنني بشهود % % 3(@)(@@) % درجات رفيعها هو رفعي % % وزوالي عن أمره المقصود % % 4(@)(@@) % دم به يا أخا الهوى وتمسك % % في لقاه بظله الممدود % % 5(@)(@@) % دير سمعان نشأتي درت فيه % % ابتغى كاس خمرة العنقود % % 6(@)(@@) % دنفا لم أزل بصاحب وجه % % مطلق الحسن عن جميع القيود % % 7(@)(@@) % دك طوري بنوره المتجلي % % فتجاوزت في الهوى عن حدود % % 8(@)(@@) % داء كوني من علتي ليس يبرا % % والدواء الدواء فيض الجود % % 9(@)(@@) % دعوة منه أظهرت كل شيء % % فاقتضت فتح بابه المسدود % % 10(@)(@@) % دولة العز للذي فيه يفنى % % ثم يبقى له لحفظ العهود % % PageV01P1865 البحر : - 1(@)(@@) % ذو العلم يعرف أن أصل المأخذ % % للكائنات من الوجود الجهبذي % % 2(@)(@@) % ذا عنده التحقيق ليس الشيء من % % عدم كما في ظن ذي الطرف القذي % % 3(@)(@@) % ذهب الذين إذا أتاهم عارف % % بحقيقة خضعوا لها بتلذذ % % 4(@)(@@) % ذهلت عقول الغافلين وعندما % % بعدت عليهم شقة المستحوذ % % 5(@)(@@) % ذموا على مقدار جهل نفوسهم % % واستثقلوا قول الهمام الأحوذي % % 6(@)(@@) % ذنب عظيم ماله من توبة % % دعوى الوجود مع المحيط بك الذي % % 7(@)(@@) % ذاق المحب لا حلاوة ذكره % % فبذكره له بالحلاوة يغتذى % % 8(@)(@@) % ذابت حشاشته ولم يدر السوى % % شوقا إليه وماله من منفذ % % 9(@)(@@) % ذاك المتيم في الهوى فؤاده % % أبدا إليه سوى الهوى لم ينقذ % % 10(@)(@@) % ذرية أولاد آدم كلهم % % عرفوا وإن لم يعرفوا روض شذى % % PageV01P1866 البحر : - 1(@)(@@) % رؤية الحق رؤية الأغيار % % والتجلي بهذه الأسرار % % 2(@)(@@) % رب جسم ورب نفس وروح % % واحد والخلاف بالاعتبار % % 3(@)(@@) % رام قوم بهم إليه وصولا % % وهو عنهم بكونهم متوارى % % 4(@)(@@) % رجحت عندهم معاني التجلي % % والتجلي نفوه بالإنكار % % 5(@)(@@) % رغبة النفس في السوى حجبتهم % % وعن الجنة اكتفوا بالنار % % 6(@)(@@) % رفع الله بينهم كل عبد % % فحماه من ذلة وصغار % % 7(@)(@@) % رونق الكشف ظاهر منه لكن % % ستر عاداتهم على العبد جاري % % 8(@)(@@) % ربما أسفر الصباح فراقب % % منك خلف الحجاب شمس النهار % % 9(@)(@@) % رحمة منه عمت الكل منا % % وهي عين الوجود في الكل ساري % % 10(@)(@@) % رقمتنا بها الكتاب 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms380# وعنها % % قد نزلنا على كلام الباري % % PageV01P1867 البحر : - 1(@)(@@) % زينة الله منه حرز حريز % % للبرايا وهي الكتاب العزيز % % 2(@)(@@) % زبرتها لهم صفات التجلي % % وبها الكل ظاهر معزوز % % 3(@)(@@) % زهد القوم في هواها ومالوا % % للذي خلفها بها محروز % % 4(@)(@@) % زاد منهم إليه فرط اشتياق % % وبه كل ذي اشتياق يفوز % % 5(@)(@@) % زجزوا العيس نحوه وأناس % % قد نسوا لله مالهم تمييز % % 6(@)(@@) % زهرة العاجل التي فتنتهم % % حبها في نفوسهم مركوز % % 7(@)(@@) % زارني من أحب والكون ليل % % فاستبان الضيا وفكت رموز % % 8(@)(@@) % زينت المقتضى فنائي بقاها % % كل شيء لديه منها كنوز % % 9(@)(@@) % زمزم القرب قد رميت بدلوي % % فيه حتى املا الإنا والكوز % % 10(@)(@@) % زفرة بعد زفرة لفؤادي % % كل حين ولا صطباري نشوز % % PageV01P1868 البحر : - 1(@)(@@) % سلام على الإخوان في حضرة القدس % % ومن محيت آثارهم في ضيا الشمس % % 2(@)(@@) % سقى الله أياما بهم قد تقاصرت % % وليلات وصل بالمسرة والأنس % % 3(@)(@@) % سترت الهوى إلا عن القوم فارتقى % % فؤادي إلى غيب عن العقل والحس % % 4(@)(@@) % سرير من التحقيق يسمو بأهله % % على العرش في أوج العلى وعلى الكرسي % % 5(@)(@@) % سريت به ليلا إلى رفرف المنى % % وبي زج في النور الذي جل عن لبس % % 6(@)(@@) % سماء التجلي بالبراق صعدتها % % وقد غبت عن جسمي الكثيف وعن نفسي % % 7(@)(@@) % سأهدم ما تبنى العقول لأهلها % % من الفكر في أرض الخيالات والحدس % % 8(@)(@@) % سريعا إلى أسرار روح شريفة % % عن النوع قد جلت ودقت عن الجنس % % 9(@)(@@) % سباني جمال الوجه والكل هالك % % وعلمي تسامى عن كتاب وعن درس % % 10(@)(@@) % سروري وأفراحي خروجي عن السوى % % وإني من الحق الوجود على الأس % % PageV01P1869 البحر : - 1(@)(@@) % شملتني بثوبها المنقوش % % ذات وجهين عبقري وريش % % 2(@)(@@) % شهدت عينها بعيني فكنا % % واحدا في بساطها المفروش % % 3(@)(@@) % شمت منها برق الهدى في ظلام % % هو كوني بنورها المرشوش % % 4(@)(@@) % شامنا مكة وكعبة قلبي % % بيتها إلا من للفتى المستحبيش % % 5(@)(@@) % شرب القوم كأسها مذ تجلت % % فمحتهم وهم جبال شريش % % 6(@)(@@) % شغفتني بحبها في سواها % % وبدت بالسوى بلا تشويش % % 7(@)(@@) % شهرة تنفر الأوانس منها % % وبها الأنس حاصل للوحوش % % 8(@)(@@) % شبهوه ونزهوه وقولوا % % بهما لا بواحد مغشوش % % 9(@)(@@) % شم عرف الوصال من قال هذا % % هو ما هو بغير ما تفتيش % % 10(@)(@@) % شهوات النفس أقوى حجاب % % وهي للمرتقى مجالى 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms381# النقوش % % PageV01P1870 البحر : - 1(@)(@@) % صح عندي في منزل الاختصاص % % إن حال العوام حال الخواص % % 2(@)(@@) % صفو عيش بواحد يتجلى % % لكن الفرق نية الإخلاص % % 3(@)(@@) % صبوة تورث العلوم وأخرى % % تنتج الجهل مالها من خلاص % % 4(@)(@@) % صدق الله إنما هي أسما % % قد تسمت ولات حين مناص % % 5(@)(@@) % صوم هذا وفطر ذاه عن الغ % % ير وبالعين عين من في الصياصي % % 6(@)(@@) % صاح هذا المقام والقوم فيه % % فاقتحم حربه بدرع دلاص % % 7(@)(@@) % صائب النيل إن رميت وإلا % % كن مهيا لوقع هذا الرصاص % % 8(@)(@@) % صبح كشف وليل عقل وماذا % % بعد حق سوى الضلال لعاصي % % 9(@)(@@) % صار مبدا أمورنا منتهاها % % وانطلاق الطور في الأقفاص % % 10(@)(@@) % صدف الدر يجعل الدر درا % % ويسمى الوجود بالأشخاص % % PageV01P1871 البحر : - 1(@)(@@) % ضرري نفع حاسدي بالنقيض % % فاسلكوا بي إلى الطويل العريض % % 2(@)(@@) % ضقت ذرعا من جاهل ليس يدري ال % % حلو حلوا بفية ذاك المريض % % 3(@)(@@) % ضم حالي لحالة ثم عني % % قال ما قال عنه بالتعريض % % 4(@)(@@) % ضد ماعنده من الله عندي % % ليس عين المحب عين البغيض % % 5(@)(@@) % ضفدع الماء نقي يطلب ماء % % وهو في الماء بين روض أريض % % 6(@)(@@) % ضاء برق الحمى فزال ظلام الكون عنا بلمع ذاك الوميض % % 7(@)(@@) % ضمحتنا بمسكها نفحات % % أقدسيات أو جنا والحضيض % % 8(@)(@@) % ضل عنها الذي اعتنى بسواها % % من شخوص سود وفي الكشف بيض % % 9(@)(@@) % ضرع غيب رضعته مع قومي % % فاجتمعنا على الإخاء الغضيض % % 10(@)(@@) % ضنك عيش الجاهل ليس يدري % % ما درينا والعيش عيش النهيض % % PageV01P1872 البحر : - 1(@)(@@) % طوبى لمن كشفت بصيرته الغطا % % وأتاه من مولاه أنواع العطا % % 2(@)(@@) % طابت له أوقاته بجيبه % % وعن الذنوب له تجاوز والخطا % % 3(@)(@@) % طف حول كعبة من تحب وقف على % % عرفاته وأئت المحل الأوسطا % % 4(@)(@@) % طهر له بيتا ليسكنه وما % % هو غير قلبك ظالما أو مقسطا % % 5(@)(@@) % طنبورنا قد أصلحت أوتاره % % فأجاد في النغمات حدا مفرطا % % 6(@)(@@) % طمع لجهولا بأن ينال بعقله % % هذا النبا فأبى عليه تسلطا % % 7(@)(@@) % طاعات أقوام معاصي غيرهم % % فاجعل فؤادك للغزالة مهبطا % % 8(@)(@@) % طع من أردت فأنت طوع مراد من % % هو ظاهر بك فاحترز أن تغلطا % % 9(@)(@@) % طه الرسول تكونت من نوره % % كل البرية ثم لو ترك الغطا % % 10(@)(@@) % طالت ديي مذ بايعته على الهدى % % وبه توخيت المقام إلا حوطا 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms382# % % PageV01P1873 البحر : - 1(@)(@@) % ظن الجهول بأنه مستيقظ % % فرأى الخيال وللسوى هو يلحظ % % 2(@)(@@) % ظهرت لنا سلمى ونحن على النقى % % فكأننا لفظ هنالك يلفظ % % 3(@)(@@) % ظمأ أزيل عن القلوب بها وقد % % نزلت ونيران القلوب تلظظ % % 4(@)(@@) % ظفرت يدي بيد المدير وكاسنا % % باق وقلبي بالطلا يتلمظ % % 5(@)(@@) % ظبي يشيقك جيده متلفتا % % والأسد من لحظاته تتحفظ % % 6(@)(@@) % ظل ظليل عن بديع صفاته % % كل الكوائن ما يدق ويغلظ % % 7(@)(@@) % ظلمات أمكان تنير بواجب % % أبدا بها عنها يصا ويحفظ % % 8(@)(@@) % ظلم من الأغيار للأغيار عن % % جهل بهم عدل بذلك يوعظ % % 9(@)(@@) % ظرف يظن له بنا من قربه % % وهو الذي يسمو به المتيقظ % % 10(@)(@@) % ظلت عليه به تدل رجالنا % % تلك الكرام العارفون فتوقظ % % PageV01P1874 البحر : - 1(@)(@@) % على كشف الغطا كل الولوع % % وذلك في الأصول وفي الفروع % % 2(@)(@@) % علمت فكنت في الإقبال أولم % % تكن تعلم فإنك في رجوع % % 3(@)(@@) % عفت دار المحب وذاب شوقا % % إلى محبوبه ذاك المنوع % % 4(@)(@@) % علا لقدو رضعنا الغيب منه % % وأنواع الكوائن كالضروع % % 5(@)(@@) % علامة وصله فقدان كلي % % به فيه ووجدان الخشوع % % 6(@)(@@) % عبيد الله بالله استقلوا % % إليه في الغروب وفي الطلوع % % 7(@)(@@) % عزائمهم به فيه وأما % % عبيد هوى النفوس فللزروع % % 8(@)(@@) % عماهم دهمص عنه فهاموا % % بدنياهم وبالعرض الخدوع % % 9(@)(@@) % عسى عنهم يماط حجاب وجه % % لهم هم ذاك ساعات الخضوع % % 10(@)(@@) % عفيف الذيل لا تطمع بوصل % % إذا لم تفن في البرق اللموع % % PageV01P1875 البحر : - 1(@)(@@) % غيم الحوادث حال دون البازغ % % من شمس ممتلئ الحقيقة فارغ % % 2(@)(@@) % غمت به قوم عليه نفوسهم % % قدسية بشراب وصل سائغ % % 3(@)(@@) % غرقوا بأمواج الوجود فأدركوا % % الأنواع من حكم هناك نوابغ % % 4(@)(@@) % غنت حمامات اللوى عند الذي % % يلهو وناحت عن صب لائغ % % 5(@)(@@) % غيب الغيوب تنزلت أسراره % % فشجت قلوب بلا بل ولغالغ % % 6(@)(@@) % غربت هنالك شمسه مذ عندنا % % طلعت بصبغ للكوائن صابغ % % 7(@)(@@) % غنى الفقير به وعز ذليلنا % % ولبست تاج الملك من يد صائغ % % 8(@)(@@) % غفرانه يمحو ذنوب وجودنا % % معه فننزل بالمقام البالغ % % 9(@)(@@) % غبنا وقد حضر الحبيب كائنا % % إذ لم نكن ما القول قول مبالغ % % 10(@)(@@) % غم وهم للذي هو جاحد % % إذ سالك فينا مسالك زائغ % % PageV01P1876 البحر : - 1(@)(@@) % فاز الذي شرب الشراب الصافي % % حتى انمحى عن سائر الأوصاف % % 2(@)(@@) % فنيت رسوم وجوده وبدا 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms383# له % % وجه الحبيب فكان نعم الكافي % % 3(@)(@@) % في ذروة الوادي غزال نافر % % عمن يحاول وصفه المتنافي % % 4(@)(@@) % فرع بنا هو أصلنا فاعجب له % % من واحد ويزيد عن آلاف % % 5(@)(@@) % فرد الوجود بوجهه فتن الورى % % فرمى بهم في حيرة وخلاف % % 6(@)(@@) % فاقت على شمس الضحى أنواره % % والكون آل به إلى الإتلاف % % 7(@)(@@) % فقه معارفال والحقائق ظاهر % % من عبده في سورة الأعراف % % 8(@)(@@) % فهو الجميل له الجمال بأسره % % وهو الذي يهوى الجمال الوافي % % 9(@)(@@) % فهمت إشارته القلوب فأقبلت % % تزهو إليه على تقى وعفاف % % 10(@)(@@) % فمحا بنور ظهوره آثارها % % وأمدها ببدائع الألطاف % % PageV01P1877 البحر : - 1(@)(@@) % قف ههنا بين العذيب وبارق % % وانظر ترى الأكوان لمعة بارق % % 2(@)(@@) % قوم مضوا ولسوف قوم غيرهم % % يأتون كالماء السريع الدافق % % 3(@)(@@) % قرأت كتاب الله بالله الحجى % % منا وقد جاءت بعلم حقائق % % 4(@)(@@) % قبلت تجلي الحق في أكوانه % % والغير مفتون بفان زاهق % % 5(@)(@@) % قالوا هي الأعيان والأعراض لم % % يدروا سوى ألفاظ نطق الناطق % % 6(@)(@@) % قم يا نديم إلى كؤوس شرابنا % % ذاك القديم بدا بخلق خلائق % % 7(@)(@@) % قربت إليه به القلوب وأبعدت % % عنه النفوس لربطها بعلائق % % 8(@)(@@) % قيد الكوائن مطلق فوجودنا % % نور يلوح لسابق وللاحق % % 9(@)(@@) % قنعت به عيني فلم تر غيره % % والقلب هام به بعزم صادق % % 10(@)(@@) % قد كنت أحسبه الذي صورته % % فإذا المصور والمصور خالقي % % PageV01P1878 البحر : - 1(@)(@@) % كل شيء كما أتى النص هالك % % غير وجه الحبيب فلينج سالك % % 2(@)(@@) % كتم الكون منه سر وجود % % فيه كالبدر في الظلام الحالك % % 3(@)(@@) % كافر الحق مؤمن بسواه % % وسواه الطاغوت فاخطر ببالك % % 4(@)(@@) % كيف يبقى مع الوجود الحقيقي % % إن تبدى تقديره المتهالك % % 5(@)(@@) % كخيال العقول يثبت فيها % % ما أرادت بأن يكون هنالك % % 6(@)(@@) % كاتب لغيبا خط في لوح روح % % أحرف الكائنات من فوق ذلك % % 7(@)(@@) % كيمياء الهدى أحاديث علمي % % فاتركوها تشبع بين الممالك % % 8(@)(@@) % كم أحالت هياكلا من نحاس % % ذهبا خالصا ينير المسالك % % 9(@)(@@) % كاف أمكاننا لها دون نور % % منه حتى لاح الوجود كذلك % % 10(@)(@@) % كن به عارفا وكن مستقيما % % وتحقق فإن هذا المالك % % PageV01P1879 البحر : - 1(@)(@@) % لمن طلل بين الأجارع بالي % % به خاطري أسر الغرام وبالي % % 2(@)(@@) % وليت عنان الشوق نحو رسومه % % فصادفته قفر الجوانب خالي % % 3(@)(@@) % لديه الصبا تجتاز أيان ما هفت % % تبث 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms384# فواغي عبهر وغوالي % % 4(@)(@@) % لقيت به قلبي على عرصاته % % مقيما يناغي فيه لمعة آل % % 5(@)(@@) % لو استعطفت ذات الستور به بدت % % لنا بين ثوبي هيبة وجمال % % 6(@)(@@) % ليالي كنا نحسب الجهر غافلا % % وأحوالنا ليس بذات زوال % % 7(@)(@@) % لصيق الغوالي كيف يألف بالسوى % % وقد بات منها في لذيذ وصال % % 8(@)(@@) % لقاء جميل الوجه عنه أميط من % % جميعي حجاب فهو بي متلالي % % 9(@)(@@) % لحاني عليه العاذلون سفاهة % % ولم يعلمو ما للعذول ومالي % % 10(@)(@@) % لجأت إلى أبواب عزته به % % وأطلقت قيلي في هواه وقالي % % PageV01P1880 البحر : - 1(@)(@@) % مراتب ذات في البرية تحكم % % وما إلا الآخر المتقدم % % 2(@)(@@) % معاني صفات دونهن مراتب % % قد يمات عهد بالحوادث تعلم % % 3(@)(@@) % مناط كلا الأمرين غيب مقدس % % وجود له منه عليه مترجم % % 4(@)(@@) % محاما بدا منه وأثبت ما اختفى % % ولاح طراز بالمراتب معلم % % 5(@)(@@) % مقامات قدس الذات معراج همتي % % وقلبي براقي والذي ثم مبهم % % 6(@)(@@) % مكانه قرب دونها كل كائن % % على الإرث نلناهنا وزال التوهم % % 7(@)(@@) % معي سرها باق وإن جحد السوى % % وإن غشى الليل الذي هو مظلم % % 8(@)(@@) % مشيت بها أسعى على حكم أمرها % % وعندي لها بيت حرام وزمزم % % 9(@)(@@) % مبين كتابي ناطق بكلامها % % وإني وإياها الذي يتكلم % % 10(@)(@@) % مضت قبلنا أمثالنا وستهتدي % % إليها أناس بعدنا وتسلم % % PageV01P1881 البحر : - 1(@)(@@) % نزل الذي هو عن سواه لفي غنى % % فتلبس السر الخفي وتبينا % % 2(@)(@@) % نعمت به روح المحب فخاطبت % % شجا يسمى أنت أو هو أو أنا % % 3(@)(@@) % نبأ عظيم كلنا ألفاظه % % من ذا أبين له فلم يجد الفنا % % 4(@)(@@) % نالته أقوام بصدق قلوبهم % % في حبه وبه لقد بلغوا المنى % % 5(@)(@@) % نبعت علوم الله من أفواههم % % وبهم تدلى الغيب حين لهم دنا % % 6(@)(@@) % نحن الذين تكاملت أوصافنا % % وبفقرنا ثبتت لنا صفة الغنى % % 7(@)(@@) % نعشو إلى النار التي غسق الدجى % % من طور سينا القلب قد ظهرت لنا % % 8(@)(@@) % نام الغبي عنها وأيقظنا لها % % من لا ينام محيعلا ومؤذنا % % 9(@)(@@) % نأتم بالهادي النبي وراثة % % عن صنوه موسى الكليم تيقنا % % 10(@)(@@) % نشأت حقيتنا كذلك تارة % % وهناك أطوار كثيرات الجنى % % PageV01P1882 البحر : - 1(@)(@@) % هي الحقيقة كل الكائنات لها % % فيا خسارة من عنها تراه لها % % 2(@)(@@) % هامت بها في السوى كل القلوب ولم % % تشعر وقد شغفت في 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms385# حبها ولها % % 3(@)(@@) % هوية قد سرت في كل كائنة % % من غير ما سريان أمرها اشتبها % % 4(@)(@@) % هب إنك الغير يا محجوب قمت به % % ألم تكن ساعة في الحق منتبها % % 5(@)(@@) % هذا الوجود به الأكوان قائمة % % فحقق الفرق واجمع واترك الشبها % % 6(@)(@@) % هفا بك البرق من أوج الكثيف فقف % % أنت الوميض وعنك الطرف منك سها % % 7(@)(@@) % هنيت بالوجه عنه الستر مرتفع % % وقد أنيل علوما فيه من فقها % % 8(@)(@@) % هزمت جيش السوى والنور من قبلي % % حتى مسحت به عن ناظري الكمها % % 9(@)(@@) % هناك زالت رسومي وانمحت سمتي % % وعقد كلي على أيدي الوجود وهي % % 10(@)(@@) % هداية هي محص الفضل قد تليت % % آياتها فأرتنا رتبة النبها % % PageV01P1883 البحر : - 1(@)(@@) % ولعت بذاك الحي والمورد الحلو % % وأيقظني برق المنازل من علو % % 2(@)(@@) % وبت أظن الحب بين أضالعي % % لقرب أراني إنني ذبت من شجوي % % 3(@)(@@) % وداد به قد خصني من عرفته % % على فطر تقصيري فأنعم بالعفو % % 4(@)(@@) % وثقت بعقلي والحواس فلم أنل % % من العلم غير الفخر بالنفس والزهو % % 5(@)(@@) % وعيت السوى حتى خرجت عن السوى % % بقلب من الأكوان أجمعها خلو % % 6(@)(@@) % وصلت وما أني وصلت لمنتهى % % ولكن إلى إثبات من جاء بالمحو % % 7(@)(@@) % وكلت إليه الأمر في كل ساعة % % وجئت بلا سعي إليه ولا عدو % % 8(@)(@@) % وعيدي به وعدي لما قد تساويا % % به الخير لي والشر في زمن الصحو % % 9(@)(@@) % وهمت هنا أشياء ثم وجدتها % % هي الحق يبدو في شئون على نحو % % 10(@)(@@) % ولاه هو الأمثال تضرب للورى % % ولم يدرها إلا المجانب للهو % % PageV01P1884 البحر : - 1(@)(@@) % لا ووجه مسفر حاز الجمالا % % ينقضي الدهر به حالا فحالا % % 2(@)(@@) % لاذت الأنفس أن يعدمها % % بتجليه كما شاء جلالا % % 3(@)(@@) % لا مني من غير علم عاذلي % % وبه أكثر لي قيلا وقالا % % 4(@)(@@) % لأك في فيه حديثي ورمي % % يمنة بالحق منه وشمالا % % 5(@)(@@) % لانت القسوة من عارفنا % % فانقلوا عنا الأحاديث الطوالا % % 6(@)(@@) % لاق بالقلب هوى ساكنه % % وهو يفنيه ويبقيه محالا % % 7(@)(@@) % لازم كشف تجليه لنا % % بتجليه وإن أفنى الرجالا % % 8(@)(@@) % لابس منا علينا صورا % % في التقادير حراما وحلالا % % 9(@)(@@) % لاح نور الحق من ظلمتنا % % فانمحت عنا وكناه تعالى % % 10(@)(@@) % لاثت الأقوام منه شغفا % % وبه قد ستروا منهم كمالا % % PageV01P1885 البحر : - 1(@)(@@) % يشرق النور بالمكان 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms386# القصي % فيذوب السوي لسر خفي % 2(@)(@@) % يمنه الحي خيمة لعريب % % نزلوا قبل بالحمى الحاجري % 3(@)(@@) % يا منادي القلوب مهلا رويدا % % إنني سائر أمام المطي % 4(@)(@@) % يهب الكشف نورنا باختصاص % % وبسير على الصراط السوي % 5(@)(@@) % يرتقي القلب في هواه مقاما % % فمقاما وراثة الهاشمي % 6(@)(@@) % يبهر العقل نوره المتجلي % % فيزيل السوى بمحو الولي % 7(@)(@@) % يا حياة الفتى إذا مات فيه % % وفنى في جمال وجه بهي % 8(@)(@@) % يقتضي من غناه عبد فقير % % أن يسمى فيه بعبد الغني % 9(@)(@@) % يهتدي للغيوب منه فيدعي % % بالإمام الهادي وبالمهدي % 10(@)(@@) % يوسفي المقام يملك مصرا % % وعراقا بحسنه اليوسفي % PageV01P1886 البحر : - 1(@)(@@) % إن المعشرات أحرف الهجا % % جاءت بأسرار الإمام المجتبى % % 2(@)(@@) % أقامت لأولا في الآخر إذ % % بطاهر لباطن فيها الهدى % % 3(@)(@@) % أهل العلوم يعرفونها ولا % % ينكرها إلا الجهول ذو الشقا % % 4(@)(@@) % أهدت إلى المهدي ما يصلحه % % في ليلة من المقامات العلى % % 5(@)(@@) % أسرار علم الحرف عن ذوق لها % % يتبعه التصريف في حكم القضا % % 6(@)(@@) % أعانة على ظهور الأمر في % % أهل الطبيعة بأرض وسما % % 7(@)(@@) % إذا أراد الشيء قال كن له % % فإنه يكون يعنى بالدعا % % 8(@)(@@) % أمر عظيم هو فيه ظاهر % % بعشر آيات لسورة النبا % % 9(@)(@@) % أتى بها الله له علامة % % في قومه وخصه بالاعتنا % % 10(@)(@@) % أقول هذا ومرادي إنه % % في كل عصران خفي وإن بدا % % PageV01P1887 البحر : - 1(@)(@@) % لا شيء غير الله والأشياء % % معدومة فعل لمن يشاء % % 2(@)(@@) % والفعل أمر عدمي ماله % % بغير من يفعله انجلاء % % 3(@)(@@) % فالظاهر الله لهم بفعله % % والفعل معدوم له الخفاء % % 4(@)(@@) % والحق أصل وبعلمه بدا % % وسائر الخلق له الأفياء % % 5(@)(@@) % والفيء معدوم الوجود ظاهر % % له إلى شاخصه انتماء % % 6(@)(@@) % والشاخص العلم القديم خلفه % % نور وجود الذات والضياء % % 7(@)(@@) % قال ألم تر إلى ربك كي % % ف قال مد الظل حين جاؤا % % 8(@)(@@) % وهو المحيط ربنا بكل ما % % في الكون وهو المنعم المعطاء % % 9(@)(@@) % وفي الحديث سبعة يظلهم % % في ظله فهو لهم غطاء % % 10(@)(@@) % وذاك يوم ظهوره لهم % % لا ظل إلا ظله المشاء % % PageV01P1888 البحر : - 1(@)(@@) % صح قولي إن السماع دواء % % لجميع الأمراض فيه شفاء % % 2(@)(@@) % لكن النفع عند أصحاب ذوق % % وطباع سليمة لا جفاء % % 3(@)(@@) % ينشط المرء من عقال إذا ما % % صرخ الناي حيث راق الغناء % % 4(@)(@@) % فاستمع يا نديم إن 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms387# كنت مثلي % % مطلق الحال ليس فيه خفاء % % 5(@)(@@) % وتنصت للدف والعود لما % % يتوالى عليهما الإطراء % % 6(@)(@@) % والذي يلتهي بذلك غر % ليس يدري ما ذلك الإيحاء % % 7(@)(@@) % هو سر يبدو من الغيب جهر % % لقلوب الرجال فيه انتشاء % % 8(@)(@@) % يسكر العقل بالذي منه يبدو % % فتفيض العلوم والأنباء % % 9(@)(@@) % إن علم الإله يملأ قلبا % % فارغا عنه زالت الأشياء % % 10(@)(@@) % وهو قلب للعرافين صحيح % % صقلته عناية واهتداء % % PageV01P1889 11(@)(@@) % ملأ الله منه كل البرايا % % والبرايا قد عمهن الفناء % % 12(@)(@@) % عدم كله وربي وجود % % هم له العرش فوقه الاستواء % % 13(@)(@@) % يتجلى بنا ونحن شهود % % باطل نحن كلنا وانمحاء % % 14(@)(@@) % لكن لقدرة ا القديمة أبدت % % لانتقاء لنا وفيها البقاء % % 15(@)(@@) % منه طفل ورحمة شملتنا % % وعطاء ورأفة واعتناء % % 16(@)(@@) % دار كاس السماع منه علينا % % فيه للكشف والتجلي احتواء % % 17(@)(@@) % فإذا دندن الرباب أجابت % % نغمة الدف فاستقر العناء % % 18(@)(@@) % وصريخ النايات قد شاكلتها % % نقرات للطبل فيها الهناء % % 19(@)(@@) % قم تأمل وزد بربك علما % % ماله في علومهم إكفاء % % 20(@)(@@) % كل علم مما سوى الله جهل % % فتنت في الورى به الجهلاء % % PageV01P1890 21(@)(@@) % غير علم الإله ما هو علم % % إنما الظن ذاك والادعاء % % 22(@)(@@) % ولهذا ترى التكبر فيمن % % علمه الكون وهو شيء هباء % % 23(@)(@@) % والذي يعرف الإله تراه % % دام فيه تواضع وانحناء % % 24(@)(@@) % حاصل الأمر كله ليس غير ال % % علم بالله أهله العلماء % % 25(@)(@@) % هكذا جاءنا الكتاب وجاءت % % سنة المصطفى وتم الوفاء % % PageV01P1891 البحر : - 1(@)(@@) % تستر السر بافشائه % % كالموج منسوب إلى مائه % % 2(@)(@@) % ليس كلام القوم رمزا ولا % % إشارة منهم بايمائه % % 3(@)(@@) % وهو صريح عندهم ظاهر % % من ألف الحظ إلى يائه % % 4(@)(@@) % طبق اصطلاحات لهم كل من % % يعرفها فاز بأنبائه % % 5(@)(@@) % كالنحو والصرف اصطلاح لهم % % يدري به حذاق ابنائه % % 6(@)(@@) % فخالطوا القوم ولا تنكروا % % تدروا دواء الشخص من دائه % % 7(@)(@@) % وعاشروهم تعرفوهم ولا % % تبغوا يفز ميت باحيائه % % 8(@)(@@) % فإن أهل الله نور ولن % % يرى امرؤ نورا بظلمائه % % 9(@)(@@) % وسلموا الأمر إلى أهله % % من يبتلي يدري ببلوائه % % 10(@)(@@) % وهم أناس شغلهم ربهم % % عقولهم سكرى بصهبائه % % PageV01P1892 11(@)(@@) % من يعرف الله فذاك الذي % % يعرفهم قاموا بأسمائه % % 12(@)(@@) % ومن يعاشر عاشقا يدره % % في كتمه السر وابدائه % % 13(@)(@@) % لا يعرف الأشواق إلا الذي % % كابدها في ضمن احشائه % % 14(@)(@@) % وكل قوم عندهم ذو هدى 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms388# % % وذو ضلال حكم إجرائه % % 15(@)(@@) % زين لهم هذا وشين لهم % % هذا فخذ كلا بأجزائه % % PageV01P1893 البحر : - 1(@)(@@) % نحن المراتب بالوجود مرتبة % % ازلا وما أقصى الوجود وأقربه % % 2(@)(@@) % إذ لا سواه وما سواه جميعه % % إلا الشئون له به متغلبه % % 3(@)(@@) % هي هكذا أزلالنا من غيرما % % جعل له والجعل منه له هبه % % 4(@)(@@) % والجعل يضف وجوده ووجوده % % ما فاض لكن للتوهم مرتبة % % 5(@)(@@) % إن الوجود عن المواد مجرد % % وله المواد تقدرت مترتبة % % 6(@)(@@) % وهو الذي يبدو بها وهي التي % % تبدو به موجودة متقلبة % % 7(@)(@@) % توحيدنا تمييزه عنها به % % وإذا تميز فهي عنه مغيبه % % 8(@)(@@) % نزهه نع كل الشئون مشبها % % وأنف التشبه فالتنزه لاشبه % % 9(@)(@@) % هو في الشئون مشبه ومنزه % % دون الشئون وذاته مستغربه % % 10(@)(@@) % كن في الوجود محققا واحيا به % % إن الوجود به الحياة الطيبة % % PageV01P1894 البحر : - 1(@)(@@) % يخاطب كلا في المناجاة صاحبه % % ويفقد كل عنده من يخاطبه % % 2(@)(@@) % كلانا وجود واحد فهي تارة % % وإني طورا والجميع مراتبه % % 3(@)(@@) % وياليت شعري إن يكن هو حاضرا % % فمن ذا أنا حتى أكون أقاربه % % 4(@)(@@) % ومن هو عندي إن حضرت به أنا % % ولكنها جلت علي مواهبه % % 5(@)(@@) % هو الحق والنور الذي هو للورى % % مدادبه قد خطهم فيه كاتبه % % 6(@)(@@) % فلا حرف إلا وهو فيه محقق % % تضيء بشمس الذات منه غياهبه % % 7(@)(@@) % رعى الله قوما لا يرون له سوى % % لرؤيتهم إن ليس شيء يناسبه % % 8(@)(@@) % تبدى فأخفاهم فكان مخاطبا % % سرائر غيب واسمعهن حبائبه % % 9(@)(@@) % يناجي فلا يلقى سواه مجاوبا % % فيكثر منه الشوق إذا شط غائبه % % 10(@)(@@) % فطورا يناديهم حبائب حضرتي % % وهم عدم ما منهمومن يجاوبه % % PageV01P1895 11(@)(@@) % وطورا عليهم يكثر الجود والعطا % % فيثبت فيهم حبه ويواظبه % % 12(@)(@@) % ألا يا ابن علمي أنني أنت بل أنا % % هو الكون معروفاته وغرائبه % % 13(@)(@@) % أنا مفرد والكل جمعي فاته % % على غير لفظي جاء الأمر واهب % % 14(@)(@@) % كما جمعوا خلدا بلفظ مباعد % % وما فيه حرف منه يدريه طالبه % % 15(@)(@@) % سوى حرف دال بالدلالة مشعر % % عليه إليه منه جدت ركائبه % % 16(@)(@@) % وبالاعتبار الفرق وهي مراتب % % لواحد أعداد تأنت مذاهبه % % 17(@)(@@) % أنا الفلك في بحر الإرادة سائر % % أنا الفلك الدوار تبدوكوا كبه % % 18(@)(@@) % قطعت إليه الكون أومض برقه % % فيافيه لي مطوية وسباسبه % % 19(@)(@@) % وقلبي بغيب الغيب 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms389# في معرك السوى % % تجرد عن تلك الغموض قواضبه % % 20(@)(@@) % إلى أن بدت ذات الوجود فأفرغت % % على مقتضى الاسم المريد قوالبه % % PageV01P1896 21(@)(@@) % وعاد كثيرا ليس يحصى وواحدا % % فقلنا تعالى الله قد جل جانبه % % PageV01P1897 البحر : - 1(@)(@@) % يا راحم الشيب في شيبه % % ويا كثير الفيض من سيبه % % 2(@)(@@) % بعتك نفسي فترفق بها % % من يشتري العبد على عيبه % % 3(@)(@@) % إن ذنوبي عظمت كثرة % % فأوقعت قلبي في ريبه % % 4(@)(@@) % وقد خفى عبدك عن نفسه % % يا من هو الظاهر في غيبه % % 5(@)(@@) % فاكشف له عنك وكن عونه % % في عجزه هذا وفي شيبه % % 6(@)(@@) % اخرج يدا بيضاء فاسلك بها % % للعبد يا مولاي في جيبه % % 7(@)(@@) % ولا تكله للسوى إنه % % يرى السوى دونك في صيبه % % PageV01P1898 البحر : - 1(@)(@@) % خادم الله يخدم العز بابه % % وتود العلى تمس ركابه % % 2(@)(@@) % وله من رضى الإله وشاح % % وعليه شهامة ومهابة % % 3(@)(@@) % والسعيد السعيد من شملته % % نظرة منه أوحباه خطابه % % 4(@)(@@) % لك طوبى إن كنت يوما تراه % % راضيا عنك قد أحاط حجابه % % 5(@)(@@) % وإذا كان ساخطا قل سريعا % % إنما الله ساخط فتشابه % % PageV01P1899 البحر : - 1(@)(@@) % لنا أتت منك أبيات محسنة % % حتى كان اسمك المعروف حل بها % % 2(@)(@@) % لسانها لرطبا بالتوحيد مشتغل % % وقلبها لم يزل في الله منتبها % % 3(@)(@@) % وكل ما جمعته رونق وصفا % % وكل ما قد حوته بهجة وبها % % 4(@)(@@) % سوى مقالك أن الكل ذلك هو % % فإن معناه صعب الفهم فانتبها % % 5(@)(@@) % وابسط جوابك في معناه منبسطا % % فإنه لم يزل في الخلق مشتبها % % 6(@)(@@) % وإنما كن كلام الله في أزل % % قديمة ليس بالإيجاد قربها % % 7(@)(@@) % وقلت بالفرق بين الرتبتين فلا % % عبد كرب ولا بالعكس رتبها % % 8(@)(@@) % فكيف قولك إن الكل ذلك هو % % فقد تناقض منك القول واشتبها % % 9(@)(@@) % مني السلام على أهل الهدى أبدا % % ما ذاقت الروح بالإحسان مشربها % % PageV01P1900 البحر : - 1(@)(@@) % كل شيء لا يرى الرحمن به % % فهوأحزان لقلب المنتبه % % 2(@)(@@) % إنه في كل شيء ظاهر % % عند من يعرفه لا يشتبه % % 3(@)(@@) % ثق به في كل حال لا تكن % % واثقا بالغير لا غير انتبه % % 4(@)(@@) % وتكلف في السوى رؤيته % % وتحقق منك ذي الرؤية به % % 5(@)(@@) % وبه كنه وجودا مطلقا % % عن قيود تكن الشهم النبه % % PageV01P1901 البحر : - 1(@)(@@) % شرف ناسوتي بلاهوته % % من جل عن نعتي ومنعوته 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms390# % % 2(@)(@@) % محجب خلف سجوف الورى % % صدى الفتى ينبيك عن صوته % % 3(@)(@@) % عنه به الأفكار مشغولة % % تحصيلها دل على فوته % % 4(@)(@@) % وكل من قدمات في حبه % % أدرك ما يرجوه في موته % % PageV01P1902 البحر : - 1(@)(@@) % للزاي في شأن الخلافة زينة % % زالت بها في العين تقديراتها % % 2(@)(@@) % فهي النبوة لا ولا ونعم نعم % % والذات قد سترت بحكم صفاتها % % 3(@)(@@) % زبر الكتاب حروفه ومرادهم % % معنى الحروف بسر تركيباتها % % 4(@)(@@) % ولنور هذا الحرف أفلاك بها % % تجري كواكبه على حركاتها % % 5(@)(@@) % وهو الذي ثبتت به صور الملا % % حسب الذي قبلت بكيفياتها % % PageV01P1903 البحر : - 1(@)(@@) % أنا عبد الغني أي عبد ذات الله % % من حيث ما علا من صفاته % % 2(@)(@@) % حكم أن الله استمع لغني % أي عن العالمين يعنى بذاته % % 3(@)(@@) % حيث في العالمين أي كل نوع % % من سوى ذاته كمصنوعاته % % 4(@)(@@) % دخلت جملة الصفات بوجه % % دون وجه كالوجه في مرءآته % % 5(@)(@@) % وإذا كنت هكذا فتأمل % % من أنا يا أنا أسير أداته % % 6(@)(@@) % إنما الله اسم ذات بجمع % % لجميع الأسماء نقل رواته % % 7(@)(@@) % فهما مثل واحد أحد في % % صحة الحمل بعد تحقيقاته % % PageV01P1904 البحر : - 1(@)(@@) % أنا لا أدري كنه ذاته % % مع اني من صفاته % % 2(@)(@@) % لا بل الحق هو الدا % % ري بما منه لذاته % % 3(@)(@@) % وأنا المعدوم أصلا % % ووجودي بالتفاته % % 4(@)(@@) % حضرة كالمسك طيبا % % وأنا من نفحاته % % 5(@)(@@) % وإذا ما كان روضا % % كنت أعلى شجراته % % 6(@)(@@) % أو بدا غصنا رطيبا % % أنا أزهى زهراته % % 7(@)(@@) % أنا محبوبي مليح % % سكرتي من غمزاته % % 8(@)(@@) % أعشق الورد لما يظ % % هر لي من وجناته % % 9(@)(@@) % أعشق الظبي إذ أش % % بهه في لحظاته % % 10(@)(@@) % وافتتاني زاد بالغص % % ن لمعنى ميلاته % % PageV01P1905 11(@)(@@) % وإذا أعرض عني % % أنا ميت وحياته % % 12(@)(@@) % أيها الغر تنبه % % لحبيبي وهباته % % 13(@)(@@) % لا تقل هذا هو الظا % % هر في عين عداته % % 14(@)(@@) % إنهم عنه لمحجو % % بون هم في دركاته % % 15(@)(@@) % وهو الظاهر لكن % % عندنا في درجاته % % 16(@)(@@) % إن ترم كأسا فخذه % % عنه من أيدي سقاته % % 17(@)(@@) % وإذا حاولت أمر ال % % قلب في شان نجاته % % 18(@)(@@) % نبه القلب بمن أن % % شاه من غفلاته % % 19(@)(@@) % وتناوله كتابا % % لك وافهمه وواته % % PageV01P1906 البحر : - 1(@)(@@) % صلاتي إليها بل إلي صلاتها % % ومنها إليها واصلات صلاتها % % 2(@)(@@) % وبالحصر في القرآن جاء هو الذي % % يصلي عليكم ثم جاءت هداتها 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms391# % % 3(@)(@@) % ملائكة بالعطف بالواو بعده % % هي الكل زالت بالتجلي سماتها % % 4(@)(@@) % ونحن الأولى بالوهم قامت شخوصنا % % وذا الوهم ما تعطى لنا ظلماتها % % 5(@)(@@) % واخراجنا للنور منها محقق % % وما النور إلا ما روته رواتها % % 6(@)(@@) % أكبرها عني ومني تكبرت % % علي وجادت بالتواضع ذاتها % % 7(@)(@@) % له وحدة ما مثلها وحدة وقد % % عجبت لذات كثرتها صفاتها % % 8(@)(@@) % صعدنا إليها وهو كان نزولها % % إلينا فمنا سميت سجداتها % % 9(@)(@@) % وإن زاد قربا عبدها وهو ساجد % % فما ذاك إلا أن نفاه ثباتها % % 10(@)(@@) % دنت فتدلت فالتقى النور والدجى % % إذا عربدت سكرا عليها صحاتها % % PageV01P1907 11(@)(@@) % لنا الحكم فيها باطنا وهي ظاهرا % % لها الحكم فينا حققته قضاتها % % PageV01P1908 البحر : - 1(@)(@@) % واحد وهو في الظهر ثلاثة % % قد وجدنا من الجمع انبعاثه % % 2(@)(@@) % ذات جبريل وصف دحية حاكت % % فبدا وجهه بحسن الدماثه % % 3(@)(@@) % فافهموا هذه الثلاثة منكم % % واعرفوها وحققوا للوراثة % % 4(@)(@@) % يا بني هذه العصابة كونوا % % حلس بيتي تمهدون أثاثه % % 5(@)(@@) % واعلموا أنكم ذكور التجلي % % وسواكم لما يزالوا إناثه % % 6(@)(@@) % وترقوا بعلمنا أودج قرب % % لا يدانى وحققوا أبحاثه % % 7(@)(@@) % خبر العشق إنني مبتداه % % فاسمعوا بي انتشاره وانبثاثه % % 8(@)(@@) % وكرغيب الغيوب يأويه قلبي % % صرت نسرا به وكنت بغاثه % % 9(@)(@@) % وبه عاش كل ميت فألقى % % من تماثيل كونه أجداثه % % 10(@)(@@) % كم أنادي به وقد صرت شيخا % % يا زمان الصبي وعصر الحداثة % % PageV01P1909 11(@)(@@) % علقتنا به الصفات عليه % % فظهرنا قروطه ورعاثه % % 12(@)(@@) % عدم كلنا وذاك وجود % % مسكه فاح مخمدا أرواثه % % 13(@)(@@) % ماؤه والدقيق منا عجين % % واحد وهي خلطة وعلاثه % % PageV01P1910 البحر : - 1(@)(@@) % نور وجه الحب أشرق % % وجميع الكون أطرق % % 2(@)(@@) % ويح من ولى وأفرق % % عنه والبارق أبرق % % 3(@)(@@) % دور % % 4(@)(@@) % هذه اسك الحميا % % تنجلي منها عليا % % 5(@)(@@) % هيا يا ندمان هيا % % فاشربوا الصرف المروق % % 6(@)(@@) % دور % % 7(@)(@@) % أهيف حلو الشمائل % % عطفه كالغصن مائل % % 8(@)(@@) % قام يسعى في غلائل % % مهجة العشاق أحرق % % 9(@)(@@) % دور % % 10(@)(@@) % لا تقل زيد وعمرو % % لا ولا شمس وبدر % % PageV01P1911 11(@)(@@) % هو رب منه قهر % % لبس الثوب المزوق % % 12(@)(@@) % دور % % 13(@)(@@) % وعلى طه صلاتي % % وسلامي يا ثقاتي % % 14(@)(@@) % للغني عبد مواتي % % في بحار العلم يغرق % % PageV01P1912 البحر : - 1(@)(@@) % بستاننا في أراضي النير بين سقى % % رياضك الغيث منهلا ومندفقا % % 2(@)(@@) % يا سعد أيامنا فيه وقد عبقت % % روائح الزهر تحكى العنبر العبقا % % 3(@)(@@) % والوقت صاف وما 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms392# في صفوه كدر % % ونال قلبي مقام القرب مستبقا % % 4(@)(@@) % هي الشخوص تقادير الوجود بدت % % في نوره باطل بالحق قد زهقا % % 5(@)(@@) % ونحن فيه بإنس القرب ليس لنا % % من وحشة مثل معشوق ومن عشقا % % 6(@)(@@) % قامت معارجنا فيه على درج % % من التجلي الإلهي جل من رزقا % % 7(@)(@@) % والوجه يشرق من خلف الحوادث لي % % بفيض علم مبين فيه سر بقا % % 8(@)(@@) % الله أكبر هذا كله أثر % % مقدر عدم فيه الوجود رقا % % 9(@)(@@) % وجود حق إذا أكوانه رمقت % % في وجهه الحق لم يترك لها رمقا % % 10(@)(@@) % وإن بدا خفيت في نوره وإذالا تستطيع له الأكوان تحضر مع حضوره إذ هما ضدان ما اتفقا % % بدت ففيها اختفى لا تدرك الشفقاسقط بيت ص % % PageV01P1913 11(@)(@@) % لولا تحليه بالأفعال ما عقلت % % عقولنا إنه الحق الذي خلقا % % 12(@)(@@) % لكننا نتراآه بأعيننا % % من خلف تقديره المعدوم وقت لقا % % 13(@)(@@) % كم أمة قبلنا كانت تشاهده % % من غير علم به عن قيدها انطلقا % % 14(@)(@@) % لو أنهم بفنا أكوانهم علموا % % لعاينوا وجهها المكشوف قد برقا % % 15(@)(@@) % لكنها أغفلتهم عن محاسنها % % فابصروا سترها الفاني الذي انمحقا % % 16(@)(@@) % ولم يزالوا على ما هم عليه إلى % % إن تم تقديره ذاك الذي سبقا % % PageV01P1914 البحر : - 1(@)(@@) % قوموا بنا يا جماعة نعشق الساقي % % أما تروه سقانا خمرة الباقي % % 2(@)(@@) % بالقرب منه له قد زادت أشواقي % % والتفت الساق فينا منه بالساق % % 3(@)(@@) % ومنه أيضا % % 4(@)(@@) % من حينا جاءنا طيب الهوى ناشق % % والحسن في قلبه سهم الهوى راشق % % 5(@)(@@) % ومن تعب في لقانا صار كالباشق % % قولوا له مصر لا تبعد على عاشق % % 6(@)(@@) % ومنه أيضا % % 7(@)(@@) % مسكين يلمع له في الكون برق الحق % % فيفتتن وهو عاشق وهو حر رق % % 8(@)(@@) % لو يعرف الباب ما شيء عليه شق % % هو الفنا في الوجود المنكشف مشتق % % PageV01P1915 البحر : - 1(@)(@@) % لذة العيش تجعل المر حلوا % % حيث فيه انقلاب عين الحقائق % % 2(@)(@@) % فترى العاشق الذي هو فاني % % في هوى من يحب نافي العلائق % % 3(@)(@@) % نفسه عين نفس من هو يهوى % % ويرى ما يراه من كل لائق % % 4(@)(@@) % فإذا ما رأى المحب عذابا % % كان حلوا عند المحبين رائق % % 5(@)(@@) % يستلذون بالعذاب وهذا % % ليس يدريه غير أهل الرقائق % % PageV01P1916 البحر : - 1(@)(@@) % وجدت كنزا هنا هو البركة 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms393# % % أنفق منه في مدة الحركة % % 2(@)(@@) % ينمو ويزداد ليس يحوجني % % إلى اتجار ولا إلى شركة % % 3(@)(@@) % كان عليه من السوى رصد % % فانفك عنه وزالت اللبكة % % 4(@)(@@) % وهو بقلبي توكل ورضى % % عنه وفيه الأمور محتبكة % % 5(@)(@@) % وإنه الكنز فهو لي أبدا % % يحفظني عنده من الهلكه % % 6(@)(@@) % وبحره كلما غطست به % % اخرج منه وفي فمي سمكه % % 7(@)(@@) % وصنعة الكيمياء اعرفها % % شكر الذي قد أدار لي فلكه % % 8(@)(@@) % يزيدني كلما شكرت له % % والشكر نفسي بذاك منهمكه % % 9(@)(@@) % فالشكر لي صنعة أعيش بها % % وهو طريقي يافوز من سلكه % % 10(@)(@@) % كم نعمة لي سبيكة ظهرت % % من شكر فيض الإله منسبكه % % PageV01P1917 11(@)(@@) % فالشكر بحر إذا مددت يدي % % اصيد ما شئته بلا شبكه % % 12(@)(@@) % والكيميا صنعتي وتلك هي ال % % شكر وذو الحال حاله هتكه % % 13(@)(@@) % وحاصل الأمر إنني رجل % % وجدت كنزا هنا هو البركة % % PageV01P1918 البحر : - 1(@)(@@) % ومنه قوله مواليا % % 2(@)(@@) % إلى متى أنت غافل يا أسير الملك % % اخرج إلى ملكوتك فالنفوس الهلك % % 3(@)(@@) % إياك بالغير تغرق في البحار الحلك % % وجه الحبيب إن بدا مخرق عليك الفلك % % 4(@)(@@) % ومنه قوله مواليا % % 5(@)(@@) % يا دار ريا أدام الله رياكي % % لمن عطش في الهوى من شم رياكي % % 6(@)(@@) % وحق من في خفايا الغيب علاكي % % ريا الأزل حجبت عن قلب علاكي % % PageV01P1919 البحر : - 1(@)(@@) % ربنا من لطفه لا يدرك % % حار من وحده المشرك % % 2(@)(@@) % أول الخلق له الروح وقل % % نفس الرحمن عن أمريك % % 3(@)(@@) % مثل لمح البصر الأمر بدت % % روحنا عنه به تنسبك % % 4(@)(@@) % فاعلموها علم ذوق تعرفوا % % ربكم إن رمتموا أن تسلكوا % % 5(@)(@@) % وابتدا كل كثيف هي من % % لطف باريها كثيف درمك % % 6(@)(@@) % ولهذا الروح لا تدركه % % هل كثيف للطيف يدرك % % 7(@)(@@) % إنما تشهده بفعلها % % وهو فيها ظاهر مشتبك % % 8(@)(@@) % جل عنها وتعالى عدم % % في وجود قط لا يحتبك % % 9(@)(@@) % صور يجلى بها خالقنا % % فنراه جل من لا يترك % % 10(@)(@@) % كل عقل عاجز بالطبع عن % % دركه حاروا به والتبكوا % % PageV01P1920 11(@)(@@) % لن ينالوه بتقواهم وإن % % زاد منهم صدقهم والنسك % % 12(@)(@@) % يا أخا العرفان هذا قمر % % في سماء الغيب هذا ملك % % 13(@)(@@) % وهو روح سابح في بحره % % مثل ما يسبح فيه السمك % % 14(@)(@@) % ثم عنه صدرت كل الورى % % والسموات العلى والفلك % % 15(@)(@@) % ونجوم سبحت في أفقها 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms394# % % ولها في كل آن حبك % % 16(@)(@@) % والنهارات المضيئات التي % % إن مضت تأتي الليالي الحلك % % 17(@)(@@) % واختلاف الناس في أحوالهم % % ناشئ عنها نجوا أو هلكوا % % 18(@)(@@) % والعقول المستمدات بها % % لاقتناص الغيب هن الشبك % % 19(@)(@@) % كل هذا واحد في نفسه % % وكثير سالموا أو فتكوا % % 20(@)(@@) % وهو روح وهو نور المصطفى % % خلقوا منه فلا ترتبكوا % % PageV01P1921 البحر : - 1(@)(@@) % إن الوجود استعملا % % في غير ما هو له % % 2(@)(@@) % إذ لا وجود للملا % % ولا لشيء قبله % % 3(@)(@@) % فهو المجاز أرسلا % % فافهم وحقق نقله % % 4(@)(@@) % عزا لوجود وعلا % % فلست تلقى مثله % % 5(@)(@@) % دور % % 6(@)(@@) % لابد للمجاز من % % علاقة وهي السبب % % 7(@)(@@) % وذاك سر مكتمن % % عارفه يرى العجب % % 8(@)(@@) % لولا الوجود قد ضمن % % إظهار ذا الكون احتجب % % 9(@)(@@) % فالكون للكون انجلى % % به ونال فضله % % 10(@)(@@) % دور % % PageV01P1922 11(@)(@@) % وجودنا الذي به % % نحن وجدنا نار ربنا % % 12(@)(@@) % يلوح للمنتبه % % فيمتلى به الأنا % % 13(@)(@@) % يقول حين قربه % % من كل إنسان أنا % % 14(@)(@@) % والبعد عنه أشكلا % % وهم يرون فعله % % 15(@)(@@) % دور % % 16(@)(@@) % عبد الغني يقول ما % % قالت به كل الورى % % 17(@)(@@) % هذا مجاز قد سما % % له حقيقة ترى % % 18(@)(@@) % ما قلت شيئا مبهما % % شرحت حالا قررا % % 19(@)(@@) % من رام هذا العلم لا % % يعدل ويعرف أصله % % PageV01P1923 البحر : - 1(@)(@@) % كن حافظا حرمة من تقتدى % % به وصن نفسك عن فصلها % % 2(@)(@@) % حتى ترى الإمداد منه بلا % % قطع وتحظى النفس في وصلها % % 3(@)(@@) % وانظر إلى فوارة الما علت % % وما علت إلا على أصلها % % PageV01P1924 البحر : - 1(@)(@@) % اجمع جميع الحوادث كلها جمله % % وألقها عنك واطرح هذه الحمله % % 2(@)(@@) % وما فضل بعد هذا فاشمله شمله % % هو الوجود الحقيقي صاحب العمله % % PageV01P1925 البحر : - 1(@)(@@) % هذا القديم وهذه أفعاله % % وجلاله هو ظاهر وجماله % % 2(@)(@@) % لا حادث إلا الذي في علمه % % بالحق كان لذكره إنزاله % % 3(@)(@@) % والكل فيه وليس شيء خارجا % % عنه وهذا في الظهور كماله % % 4(@)(@@) % والحادث المعلوم ليس بحادث % % علم قديم مثله أحواله % % 5(@)(@@) % لكن له حدث يقال شريعة % % إن الطهارة رفعه وزوا له % % 6(@)(@@) % كالعبد يعلم ثم يذكر علمه % % لا خارجا عنه وذاك خياله % % 7(@)(@@) % أهل الجمال لهم به بسط كما % % أهل الجلال بقبضهم إجلاله % % 8(@)(@@) % لا هؤلاء لهؤلاء مجانس % % هيهات أين الليل أين هلاله % % 9(@)(@@) % جمع الإله الحق يوم قيامة % % كل الجلال لناره إضلاله % % 10(@)(@@) % وكذا الجمال جميعه 
urn:cts:arabLit:1143CabdGhaniNabulusi.Diwan.JK007641-ara1:ms395# المجموع في % % نور الجنان تفيأته ظلاله % % PageV01P1926 11(@)(@@) % ذاك الذي للظالمين كما الذي % % للصالحين هو الجمال وآله % % 12(@)(@@) % مقسومة في العلم تلك وهذه % % حكمت بقسمتها لنا آزاله % % 13(@)(@@) % لا خلف لا تبديل في كلماته % % نص الكتاب درت به أبداله % % PageV01P1927 البحر : - 1(@)(@@) % طريقنا قل بأقوالها % % ودع عنك تفند عذالها % % 2(@)(@@) % خذ الفرق ما بين أهل الهدى % % وأهل الضلال وأعمالها % % 3(@)(@@) % لكل على زعمه طاعة % % وقانون وضع لأفعالها % % 4(@)(@@) % وفي كل طائفة همة % % لتحصيل غايات أحوالها % % 5(@)(@@) % وفيهم سلوك على منهج % % صواب لدى عقد عمالها % % 6(@)(@@) % ولكن سوى دين أهل الهدى % % عقول رأت حسن إضلالها % % 7(@)(@@) % فقالت على الحق ما لم يقل % % وقد زخرفت قبح أقوالها % % 8(@)(@@) % فلا وضع شرع لها ثابت % % لينوي به قرب إيصالها % % 9(@)(@@) % بصبر زهدو وأكل الحلال % % وشكر وتقوى وأشكالها % % 10(@)(@@) % وصوم وترك لذيذ النكاح % % وشهوات نفس وآمالها % % PageV01P1928 11(@)(@@) % وترك لزنى ا والربا والريا % % وظلم وقتل وأنكالها % % 12(@)(@@) % فنيتهم فعلها لم يكن % % لهم طاعة دون أفعالها % % 13(@)(@@) % فيبقى لهم فعلها هكذا % % بلا قصد وضع لتمثالها % % 14(@)(@@) % وغاية ذلك نيل الصفا % % وترك الجسوم لأثقالها % % 15(@)(@@) % وتحصيل خفتها والفهو % % م ترتاض من ترك اشغالها % % 16(@)(@@) % وإن دام أنتج قدس النفوس % % وتطهيرها من قذى حالها % % 17(@)(@@) % وكشفا عن الملكوت الذي % % لأرواحه سر إقبالها % % 18(@)(@@) % وهم في حجاب عن الله عن % % معاني التجلي وإنزالها % % 19(@)(@@) % وأما طريقة أهل الهدى % % كما هم نزول بأطلالها % % 20(@)(@@) % فوضع صحيح به مؤمنون % % على مقتضى حكم أرسالها % % PageV01P1929 21(@)(@@) % فأفعالهم لكمالاتهم % % بنيتهم وضع إكمالها % % 22(@)(@@) % فوصف الصفا عندهم زائد % % وقدس النفوس بأفضالها % % 23(@)(@@) % وفي ملكوت السما كشفهم % % عن الروح تفصيل إجمالها % % 24(@)(@@) % وقد زادهم ربهم علمهم % % به في المجالي وإجلالها % % 25(@)(@@) % وأنوار غيب إلهية % % مثالية تملك الوالها % % 26(@)(@@) % منزلة عندهم في المواد % لتعريفهم غيب آزالها % % 27(@)(@@) % فيبدي الخيال بها جهده % % وتوفي القروض بأمثالها % % PageV01P1930 البحر : - 1(@)(@@) % قل لمن هام تابعا أوهامه % % كل شيء على الإله علامه % % 2(@)(@@) % أي عقل لا يستدل عليه % % بالإشارات وهو فيها أقامه % % 3(@)(@@) % ذاك عقل من غيه في عقال % % ليس يدري الهدى ولا الاستقامه % % 4(@)(@@) % هذه الكائنات علوا وسفلا % % ترجمت لي عن الإله كلامه % % PageV01P1931 البحر : - 1(@)(@@) % عجزنا عن مواقع الشكر شكر % % لممد فناءنا بدوامه % % 2(@)(@@) % سيد منعم على العبد حتى % % غفلة العبد 
