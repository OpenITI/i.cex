urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms37# تنسني إذا نشر البس % % 112(@)(@@) % تان أوصناف وشيه وتراءى % % وحكتك الرياض في الحسن والطي % % 113(@)(@@) % ب وإن كان ذاك منها اعتداء % وتغنى القمري فيها أخاه % % 114(@)(@@) % وأجابت مكاءة مكاء % % وأبدتكلحظها قضب النر % % 115(@)(@@) % جس ميلا إليك تحكي النساء % بقعة لا تني تفاخر عطا % % 116(@)(@@) % را وتشجيبوشيها وشاء % % لم تزل تستعير منك جمالا % 117(@)(@@) % تكتسيهوتستمير ثناء % % فجمال لمنظر وثناء % 118(@)(@@) % لمشم يحكي نثاك ذكاء % % واهو قربي إذا شرعت على دج % 119(@)(@@) % لة في ظل ليلة قمراء % % وحكت دجلة انهلالك بالنا % % 120(@)(@@) % ئل والعلمواكتست لألاء % % وأعارت هواء دارك ثوبا % PageV01P168 121(@)(@@) % من نداهافكان ماء هواء % % فحكى منك نعمة الخلق النا % % 122(@)(@@) % عم في كل حالة إثناء % % وأجاب الملاح في بطنها المل % 123(@)(@@) % لاح يحتث بالسفين الحداء % % وادكرني إذا استثرت سحابا % 124(@)(@@) % ذات يوم عشية أو ضحاء % % فتعالت فوارة تحسد الخضه % % 125(@)(@@) % راء إغداق مائها الغبراء % % كلما أخلفت سماء زمانا % 126(@)(@@) % خلفت فيه ديمة هطلاء % % سحسحت ماءها على أرض % 127(@)(@@) % بعدما صافحت به الجوزاء % % فحكت كفك التي تخلف المز % % 128(@)(@@) % ن علينا فترغم الأنواء % % وتأمل إذا لحظت بعيني % % 129(@)(@@) % ك صحونا لاتعرف الانتهاء % % وحكتك الصمان في سعة الصد % % 130(@)(@@) % ر وإن كان صدرك الدهناء % % جعل الله كل ذاك فداء % % PageV01P169 131(@)(@@) % لكإن كان للفداء كفاء % % لو بذلنا فداءك الشمس والبد % % 132(@)(@@) % رلقال الزمانزيدوا فداء % % لا تجاهل هناكيا من أبي الل % % 133(@)(@@) % ه عليه أن يشبه الجهلاء % % حسن علمي إذ ذاك بالحسن المو % % 134(@)(@@) % قع مما يروي القلوب الظماء % % وارتفاعي عن الجفاة المسوي % % 135(@)(@@) % ن بشدو المجيدة الضوضاء % % موجب أن أكون أدنى جليس % % 136(@)(@@) % لكأعلو بحقي الجلساء % % أركيكا رأيت عبدكصفرا % % 137(@)(@@) % لاجنى فيه أم جنى شنعاء % % لاتدع مغرس الكريم من الغر % % 138(@)(@@) % س خلاء من الكريم قواء % % أين مثلي مفاتش لك أم أي % % 139(@)(@@) % ن نديم تعده ندماء % % شهد الله والموازين والقس % % 140(@)(@@) % ط جميعا شهادة إمضاء % % أن رأيي لذو الرجاحة وزنا % % PageV01P170 141(@)(@@) % دع يمينيوزنه والآراء % % أنت شهم محصل فاترك الأس % % 142(@)(@@) % ماء للبلهواكشف الأنباء % % ما تقصيت ما لدي ولا استق % % 143(@)(@@) % صيتفاجعل إقصاءك استقصاء % % وانتبه لي من رقدة الملك تعلم % % 144(@)(@@) % أن لله معشرا علماء % % وتذكر معاهدي إنك المر % % 145(@)(@@) % ء الذي ما عهدته نساء % % وارع لي حرمة المودة 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms38# والخد % % 146(@)(@@) % مة والمدح تعجب الكرماء % % وجديرون بالرعاية قوم % % 147(@)(@@) % جعلتهم رعاة ملك رعاء % % قد تجرعت من جفائك لما % % 148(@)(@@) % سمتني ذاك شربة كدراء % % ولقد يقلب الكريم من السا % % 149(@)(@@) % دات نعماء عبده بأساء % % ظالما أو مقوما ثم يرعا % % 150(@)(@@) % ه ويقنى حرية وحياء % % فإذا زالت المسرة عادت % % PageV01P171 151(@)(@@) % وإذا ما تحسر الظل فاء % % فلماذا رمى هناك صفاتي % % 152(@)(@@) % أصفيائي عدمتهم أصفياء % % إنما كان حق مثلي أن ير % % 153(@)(@@) % حملاقوا أعداءهم رحماء % % بل رأوا رحمة الأعاديولا قو % % 154(@)(@@) % هم ملاء بعسفهم أوفياء % % وجزاهم رب الحزاء على ذا % % 155(@)(@@) % لك ما يشبه اللئيم جزاء % % معشر كنت خلتهم قبل بلوا % % 156(@)(@@) % ي أوداء صفوة أصدقاء % % صادفوا نكبتي فكانت لديهم % % 157(@)(@@) % للقلوب المراض منهم شفاء % % وأظنوك أن ذاك وفاء % % 158(@)(@@) % من موال يصححون الولاء % % فبدا منهم بلاء ذميم % % 159(@)(@@) % أشبعوه خيانة ورياء % % ماأتى منهم نذير بعتب % % 160(@)(@@) % فيلقى هناك داء دواء % % لا ولا جاء بعد ذاك بشير % % PageV01P172 161(@)(@@) % برضا ثابت يقيم الذماء % % لا ولا جاء بين ذاك وهذا % % 162(@)(@@) % مترت يعلل الحوباء % % لم يواسوا ولم يؤسوا خليلا % % 163(@)(@@) % سوءة سوءة لهم سواء % % منعوا خيرهمولا تأمن الضر % % 164(@)(@@) % ر من المانعين منك الجداء % % فأتى شرهم على كل بقيا % % 165(@)(@@) % لا لقوا من ملمة إبقاء % % خلفوني خلافة الذئب في الش % % 166(@)(@@) % شاءوكانوا في جهل حقي شاء % % وإذا ما حماك عود جناه % % 167(@)(@@) % فاخش من حد شوكه أنكاء % % وكأني غدا أراهم وكل % % 168(@)(@@) % ينشر العذر طاويا شحناء % % سعر الله في الجوانح منهم % % 169(@)(@@) % سعرة النارتلكم البغضاء % % لاعدتهم هناك هاتيك نارا % % 170(@)(@@) % وأصابت من شخصي الإخطاء % % حرقتهم وأرقتهم ولا زا % % PageV01P173 171(@)(@@) % لت وبالا عليهم ووباء % % رتعوا في وخيمة الغيب مني % % 172(@)(@@) % لا تلقي من ارتعاها مراء % % أظهروا للوزير جهلا وغدرا % % 173(@)(@@) % موالذي ضم وده الأهواء % % والذي ساد غير مستنكر السؤ % % 174(@)(@@) % دد في الناسواعتلى كيف شاء % % قمر نجتليه ملء عيون % 175(@)(@@) % وصدور براعة وضياء % % لم يزل يجعل المساء صباحا % 176(@)(@@) % كلما بدل الصباح مساء % % قتل اليأس وهو مستحكم الأم % % 177(@)(@@) % روأحيا المطامع الأنضاء % % وارتضاه الأمير حين رآه % % 178(@)(@@) % وارتأى فيه رؤية وارتياء % % قال رأس الرؤوس لما رآه % % 179(@)(@@) % وصف البدر نفسه لاخفاء % % بشر البرق بالحياوسنا الصب % % 180(@)(@@) % ح بأن يقلب الدجى أضواء 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms39# % % كل شيء أراه منك بشير % % PageV01P174 181(@)(@@) % صدق الله هذه البشراء % % وإذا مخابر الناس غابت % % 182(@)(@@) % عنك فاستشهد الوجوه الوضاء % % قال بالحق فيه ثم اجتباه % % 183(@)(@@) % واصطفاهوما أساء اصطفاء % % فغدا يوسع الرعية عدلا % % 184(@)(@@) % غير أني لقيت منه اعتداء % % أجميل بك اطراحيوقد قد % 185(@)(@@) % دمت في رأيك الجميل رجاء % % ولي الطائر السعيد الذي كا % % 186(@)(@@) % ن بريدا بدولة زهراء % % ما تعرفت مذ تعيفت طيري % % 187(@)(@@) % غير نعماء ظاهرت نعماء % % ثم أدنيتني فزادك يمني % % 188(@)(@@) % من أمير مؤيد إدناء % % وتناولتني ببر فبرت % % 189(@)(@@) % ك يد الله ثرة بيضاء % % وكذا كلما نويت لمولا % % 190(@)(@@) % ك مزيدا أوتيتهوالهناء % % أنا مولاكأنت أعتقت رقي % % PageV01P175 191(@)(@@) % بعدما خفت حالة نكراء % % فعلام انصراف وجهك عني % % 192(@)(@@) % وتناسيكحاجتي إلغاء % % كان يأتيني الرسول فيهدي % % 193(@)(@@) % لي سروراويكبت الأعداء % % فقطعت الرسول عني ضنا % % 194(@)(@@) % باتخاذيه مفخرا وبهاء % % إن أكن غير محسن كل ما تط % % 195(@)(@@) % لب إني لمحسن أجزاء % % فمتى ما أردت صاحب فحص % % 196(@)(@@) % كنت ممن يشارك الحكماء % % ومتى ما أردت قارض شعر % % 197(@)(@@) % كنت ممن يساجل الشعراء % % ومتى ما خطبت منى خطيبا % 198(@)(@@) % جل خطبي ففاق بي الخطباء % % ومتى حاول الرسائل رسلي % % 199(@)(@@) % بلغتني بلاغتي البلغاء % % غير أني جعلت أمري إلى صف % % 200(@)(@@) % حك عن كل عورة إلجاء % % أنت ذاك الذي إذا لاح عيب % % PageV01P176 201(@)(@@) % جعل الستر دونه الإغضاء % % أنا عار من كل شيء سوى فض % % 202(@)(@@) % لكلا زلت كسوة وغطاء % % ولقائي إياك ماء الحياتي % % 203(@)(@@) % ن فلا تقطعن عني اللقاء % % سمني الخسف كله أقبل الخس % % 204(@)(@@) % ف بشكرولا تسمني الجفاء % % ليس بالناظرين صبر عن الوج % % 205(@)(@@) % ه الذي يجمع السنا والسناء % % منظر يملأ القلوب مع الأب % % 206(@)(@@) % صار نوراويضرح الأقذاء % % ليت شعري عن الفراسي والزج % 207(@)(@@) % جاج هل يرعيان مني الإخاء % % فيقولونإن موضع مولا % % 208(@)(@@) % ك عميرا أشف منه خلاء % % يالقوم أأثقل الأرض شخصي % % 209(@)(@@) % أم شكت من جفاء خلقي امتلاء % % أنا من خف واستدق فما يث % 210(@)(@@) % قل أرضا ولا يسد فضاء % % إن أكن عاطلا لديك من الآ % % PageV01P177 211(@)(@@) % لات حاشاك أن تجور غباء % % فلأكن عوذة لمجلسك المو % % 212(@)(@@) % نق أردد عين الردى عمياء % % أنا مولاكك بالمحبة والمي % 213(@)(@@) % ل فحمل عواتقي الأعباء % % وأنا المرء لا يحمل إلا % % 214(@)(@@) % شكر آلائكم 
