urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms41# أي % % 249(@)(@@) % ن نديم تعده ندماء % % شهد الله والموازين والقس % % 250(@)(@@) % ط جميعا شهادة إمضاء % % أن رأيي لذو الرجاحة وزنا % % PageV01P181 251(@)(@@) % دع يمينيوزنه والآراء % % أنت شهم محصل فاترك الأس % % 252(@)(@@) % ماء للبلهواكشف الأنباء % % ما تقصيت ما لدي ولا استق % % 253(@)(@@) % صيتفاجعل إقصاءك استقصاء % % وانتبه لي من رقدة الملك تعلم % % 254(@)(@@) % أن لله معشرا علماء % % وتذكر معاهدي إنك المر % % 255(@)(@@) % ء الذي ما عهدته نساء % % وارع لي حرمة المودة والخد % % 256(@)(@@) % مة والمدح تعجب الكرماء % % وجديرون بالرعاية قوم % % 257(@)(@@) % جعلتهم رعاة ملك رعاء % % قد تجرعت من جفائك لما % % 258(@)(@@) % سمتني ذاك شربة كدراء % % ولقد يقلب الكريم من السا % % 259(@)(@@) % دات نعماء عبده بأساء % % ظالما أو مقوما ثم يرعا % % 260(@)(@@) % ه ويقنى حرية وحياء % % فإذا زالت المسرة عادت % % PageV01P182 261(@)(@@) % وإذا ما تحسر الظل فاء % % فلماذا رمى هناك صفاتي % % 262(@)(@@) % أصفيائي عدمتهم أصفياء % % إنما كان حق مثلي أن ير % % 263(@)(@@) % حملاقوا أعداءهم رحماء % % بل رأوا رحمة الأعاديولا قو % % 264(@)(@@) % هم ملاء بعسفهم أوفياء % % وجزاهم رب الحزاء على ذا % % 265(@)(@@) % لك ما يشبه اللئيم جزاء % % معشر كنت خلتهم قبل بلوا % % 266(@)(@@) % ي أوداء صفوة أصدقاء % % صادفو نكبتي فكانت لديهم % % 267(@)(@@) % للقلوب المراض منهم شفاء % % وأظنوك أن ذاك وفاء % % 268(@)(@@) % من موال يصححون الولاء % % فبدا منهم بلاء ذميم % % 269(@)(@@) % أشبعوه خيانة ورياء % % ماأتى منهم نذير بعتب % % 270(@)(@@) % فيلقى هناك داء دواء % % لا ولا جاء بعد ذاك بشير % % PageV01P183 271(@)(@@) % برضا ثابت يقيم الذماء % % لا ولا جاء بين ذاك وهذا % % 272(@)(@@) % مترت يعلل الحوباء % % لم يواسوا ولم يؤسوا خليلا % % 273(@)(@@) % سوءة سوءة لهم سواء % % منعوا خيرهمولا تأمن الضر % % 274(@)(@@) % ر من المانعين منك الجداء % % فأتى شرهم على كل بقيا % % 275(@)(@@) % لا لقوا من ملمة إبقاء % % خلفوني خلافة الذئب في الش % % 276(@)(@@) % شاءوكانوا في جهل حقي شاء % % وإذا ما حماك عود جناه % % 277(@)(@@) % فاخش من حد شوكه أنكاء % % وكأني غدا أراهم وكل % % 278(@)(@@) % ينشر العذر طاويا شحناء % % سعر الله في الجوانح منهم % % 279(@)(@@) % سعرة النارتلكم البغضاء % % لاعدتهم هناك هاتيك نارا % % 280(@)(@@) % وأصابت من شخصي الإخطاء % % حرقتهم وأرقتهم ولا زا % % PageV01P184 281(@)(@@) % لت وبالا عليهم ووباء % % رتعوا في وخيمة الغيب مني % % 282(@)(@@) % لا تلقي من ارتعاها مراء % % أظهروا للوزير جهلا وغدرا % % 283(@)(@@) % هوعما هم يراهم 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms42# أدباء % % فجلوا عورة لطرف جل ي % % 284(@)(@@) % حسبوا شمسه تغشت عماء % % جعلوا العبد كفء مولاهفانظر % % 285(@)(@@) % هل تراهم لعاقل أكفاء % % ما تعدوا بذاك أن وزنوني % % 286(@)(@@) % بكضلت عقولهم عقلاء % % غفلة فوق غفلة ثم سهوا % % 287(@)(@@) % فوق سهوعدمتهم أذكياء % % فلهم لائمون فيما أتوه % % 288(@)(@@) % ورأوهلا يعدموا اللوماء % % خذلوني وطأطئوا البدر جهلا % % 289(@)(@@) % وتظنوه يخبط الظلماء % % لاعفا الله عنهم بل عفاهم % % 290(@)(@@) % وزوى العفو عنهم لا العفاء % % ما ائتلاك الإخوانكلا بل الخو % % PageV01P185 291(@)(@@) % وان قاسوا أمثالهم خلطاء % % آفتي فيك أن رأيت محبا % % 292(@)(@@) % لايرى عنك بالغنى استغناء % % لاتطاول بحسن وجهك والدو % % 293(@)(@@) % لة واذكر من شانئيك الفناء % % واحتشم أن يراك معطيك ما أع % % 294(@)(@@) % طاك تجزي نعماءه خيلاء % % وارتفع أن يراك تكسو الفتى الحر % % 295(@)(@@) % ر إذا ما ملكته الإزراء % % إن من أضعف الضعاف لدى الل % 296(@)(@@) % ه قويا يستضعف الضعفاء % % ولأهل العقول فيه رجاء % % 297(@)(@@) % وعزاء يقاوم العزاء % % وتعلم متى حميت على عب % % 298(@)(@@) % دك تلك المياه والأكلاء % % أن لله غير مرعاك مرعى % % 299(@)(@@) % يرتعيهوغير مائك ماء % % وتيقن متى جنيت على عبد % % 300(@)(@@) % ك ضيما وضيعة وعناء % % أن لله بالبرية لطفا % % PageV01P186 301(@)(@@) % سبق الأمهات والآباء % % قد أطلت العتاب جداوأكثر % % 302(@)(@@) % ت فضولي لكن لي شركاء % % من دعاني إلى الذي كان مني % % 303(@)(@@) % فهو مثلي جلية لاامتراء % % أنا ذو القصد غير أني متى آ % % 304(@)(@@) % نست جورا رأيت لي غلواء % % والحليم العليم من يحسن الإي % % 305(@)(@@) % قاد بدءاويحسن الإطفاء % % والطبيب اللبيب من يتبع الدا % % 306(@)(@@) % ء دواء يشفيه لا الداء داء % % وعسى قائل يقول بجهل % % 307(@)(@@) % إنما يطلب الغنى والغناء % % ولهذين مطلب عند قوم % % 308(@)(@@) % لست ألفى لرحلهم غشاء % % والغنى واسع بكفي جواد % % 309(@)(@@) % يرزق الأغنياء والفقراء % % لي خمسون صاحبا لو سألت ال % % 310(@)(@@) % قوت فيهم ألفيتهم سمحاء % % أترى كل صاحب لي منهم % % PageV01P187 311(@)(@@) % يمنع الشهر بلغتي إجراء % % لي في درهمين في كل شهر % % 312(@)(@@) % من فئام ما يطرد الحوجاء % % والغناء الشديد شدوا وضربا % 313(@)(@@) % سحنة قد ملأت منها الإناء % % ولحسبي عرفان آل بنان % % 314(@)(@@) % وبنان شربا معينا رواء % % ظلت عشرا كواملا في مغاني % % 315(@)(@@) % ه أغني وأسمع الأنجاء % % فليقم كاشحي بنقض الذي قل % % 316(@)(@@) % ت وإلا فليطرق استحياء % % أو فرغما له هناك ودغما % % 317(@)(@@) % ألحم 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms43# الله أنفه البوغاء % % لاتقدر بحسن وجهك صيدي % % 318(@)(@@) % بعد نفري كما تصيد الظباء % % صد بذاك المها تصدهاوهيها % % 319(@)(@@) % ت تصيد المصمم الأباء % % أنا ليث الليوث نفساوإن كن % % 320(@)(@@) % ت بجسمي ضئيلة رقشاء % % إنني إن نفرت أمعنت في النف % % PageV01P188 321(@)(@@) % رومثلي عمن تناءى تناءى % % لست باللقطة الخسيسة فاعرف % % 322(@)(@@) % لي قدريواسأل به الفهماء % % وانتفع بالعلا بذهنكواذمم % % 323(@)(@@) % كل ذهن لا ينفع الذهناء % % قد بغى قبلك الدعي فلم أح % % 324(@)(@@) % فل بأن كان باغيا بغاء % % بل تصبرت وانتظرت من الل % % 325(@)(@@) % ه نآدا تصيبه دهياء % % فاعتبر بابن بلبل إن فيه % % 326(@)(@@) % عبرة لامرىء أعد وعاء % % والعلاء بن صاعد قبل هذا % % 327(@)(@@) % قد حمى دون رائدي الأحماء % % فارم بالطرف شخصه هل تراه % % 328(@)(@@) % وادعه الدهر هل يجيب دعاء % % ليس إلا لأنني كنت شمسا % 329(@)(@@) % قابلت منه مقلة عشواء % % فأرانيه ناصري وأباه % % 330(@)(@@) % وله الحمد مثلة شوهاء % % أنا عبد الإنصافقرن التعدي % % PageV01P189 331(@)(@@) % فاسلك القصد بيوعد العداء % % أنا ذو صفحتينملساء حس % % 332(@)(@@) % ناءوأخرى تمسها خشناء % % خاشع تارة وجبار أخرى % % 333(@)(@@) % فتراني أرضا وطورا سماء % % لا بحول ولا بقوة ركن % % 334(@)(@@) % غير لبسي تجلدا وحياء % % أنا جلد على عناد الأحاظي % % 335(@)(@@) % وأبي أن أرأم النكراء % % فمتى شئت فامتحنيوأولى % % 336(@)(@@) % بك عفو يقابل استعفاء % % أنا ذاك الذي سقته يد السق % 337(@)(@@) % م كؤوسا من المرار رواء % % ورأيت الحمام في الصور الشن % 338(@)(@@) % عوكانت لولا القضاء قضاء % % ورماه الزمان في شقة النف % 339(@)(@@) % س فأصمى فؤاده إصماء % % وابتلاه بالعسر في ذاك والوح % 340(@)(@@) % شة حتى أمل منه البلاء % % وثكلت الشباب بعد رضاع % PageV01P190 341(@)(@@) % كان قبل الغذاء قدما غذاء % كل هذا لقيته فأبت نف % % 342(@)(@@) % سي إلا تعززا لااختتاء % % وأرى ذلتي تريك هواني % % 343(@)(@@) % ودنوي يزيدني إقصاء % % ومتى ما فزعت منك إلى الصب % 344(@)(@@) % ر فناديته أجاب النداء % % ومتى ما دعوت ربي على الده % % 345(@)(@@) % ر الخطوب لبى الدعاء % % وإباء الهوان عدوى أتتني % % 346(@)(@@) % منكوالعبد يقبل الإعداء % % أنت علمتني إباء الدنايا % % 347(@)(@@) % يا مليكيفما أسأت الأداء % % وعزيز علي أن قلت ما قل % % 348(@)(@@) % موالذي ضم وده الأهواء % % والذي ساد غير مستنكر السؤ % % 349(@)(@@) % دد في الناسواعتلى كيف شاء % % قمر نجتليه ملء عيون % 350(@)(@@) % وصدور براعة وضياء % % لم يزل يجعل المساء صباحا % PageV01P191 351(@)(@@) % كلما 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms44# بدل الصباح مساء % % قتل اليأس وهو مستحكم الأم % % 352(@)(@@) % روأحيا المطامع الأنضاء % % وارتضاه الأمير حين رآه % % 353(@)(@@) % وارتأى فيه رؤية وارتياء % % قال رأس الرؤوس لما رآه % % 354(@)(@@) % وصف البدر نفسه لاخفاء % % بشر البرق بالحياوسنا الصب % % 355(@)(@@) % ح بأن يقلب الدجى أضواء % % كل شيء أراه منك بشير % % 356(@)(@@) % صدق الله هذه البشراء % % وإذا مخابر الناس غابت % % 357(@)(@@) % عنك فاستشهد الوجوه الوضاء % % قال بالحق فيه ثم اجتباه % % 358(@)(@@) % واصطفاهوما أساء اصطفاء % % فغدا يوسع الرعية عدلا % % 359(@)(@@) % غير أني لقيت منه اعتداء % % أجميل بك اطراحيوقد قد % 360(@)(@@) % دمت في رأيك الجميل رجاء % % ولي الطائر السعيد الذي كا % % PageV01P192 361(@)(@@) % ن بريدا بدولة زهراء % % ما تعرفت مذ تعيفت طيري % % 362(@)(@@) % غير نعماء ظاهرت نعماء % % ثم أدنيتني فزادك يمني % % 363(@)(@@) % من أمير مؤيد إدناء % % وتناولتني ببر فبرت % % 364(@)(@@) % ك يد الله ثرة بيضاء % % وكذا كلما نويت لمولا % % 365(@)(@@) % ك مزيدا أوتيتهوالهناء % % أنا مولاكأنت أعتقت رقي % % 366(@)(@@) % بعدما خفت حالة نكراء % % فعلام انصراف وجهك عني % % 367(@)(@@) % وتناسيكحاجتي إلغاء % % كان يأتيني الرسول فيهدي % % 368(@)(@@) % لي سروراويكبت الأعداء % % فقطعت الرسول عني ضنا % % 369(@)(@@) % باتخاذيه مفخرا وبهاء % % إن أكن غير محسن كل ما تط % % 370(@)(@@) % لب إني لمحسن أجزاء % % فمتى ما أردت صاحب فحص % % PageV01P193 371(@)(@@) % كنت ممن يشارك الحكماء % % ومتى ما أردت قارض شعر % % 372(@)(@@) % كنت ممن يساجل الشعراء % % ومتى ما خطبت منى خطيبا % 373(@)(@@) % جل خطبي ففاق بي الخطباء % % ومتى حاول الرسائل رسلي % % 374(@)(@@) % بلغتني بلاغتي البلغاء % % غير أني جعلت أمري إلى صف % % 375(@)(@@) % حك عن كل عورة إلجاء % % أنت ذاك الذي إذا لاح عيب % % 376(@)(@@) % جعل الستر دونه الإغضاء % % أنا عار من كل شيء سوى فض % % 377(@)(@@) % لكلا زلت كسوة وغطاء % % ولقائي إياك ماء الحياتي % % 378(@)(@@) % ن فلا تقطعن عني اللقاء % % سمني الخسف كله أقبل الخس % % 379(@)(@@) % ف بشكرولا تسمني الجفاء % % ليس بالناظرين صبر عن الوج % % 380(@)(@@) % ه الذي يجمع السنا والسناء % % منظر يملأ القلوب مع الأب % % PageV01P194 381(@)(@@) % صار نوراويضرح الأقذاء % % ليت شعري عن الفراسي والزج % 382(@)(@@) % جاج هل يرعيان مني الإخاء % % فيقولونإن موضع مولا % % 383(@)(@@) % ك عميرا أشف منه خلاء % % يالقوم أأثقل الأرض شخصي % % 384(@)(@@) % أم شكت من جفاء خلقي امتلاء % % أنا من خف واستدق فما يث % 385(@)(@@) % قل أرضا ولا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms45# يسد فضاء % % إن أكن عاطلا لديك من الآ % % 386(@)(@@) % لات حاشاك أن تجور غباء % % فلأكن عوذة لمجلسك المو % % 387(@)(@@) % نق أردد عين الردى عمياء % % أنا مولاكك بالمحبة والمي % 388(@)(@@) % ل فحمل عواتقي الأعباء % % وأنا المرء لا يحمل إلا % % 389(@)(@@) % شكر آلائكم لكم آلاء % % أدن شخصي إذا شدت لك بستا % % 390(@)(@@) % نوغنت غناءها غناء % فاستثارت من اللحود المغن % PageV01P195 391(@)(@@) % نين فأضحى أمواتهم أحياء % يالإحضارها مع إبن سريج % 392(@)(@@) % معبدا والغريض والميلاء % وتلتها عجائب فتغنت % 393(@)(@@) % مشبهات اسمها صيابا ولاء % فحكت هذه وتلك يميني % 394(@)(@@) % ك إذا ما تبارتا إعطاء % وأبى الله عند ذلك أشبا % % 395(@)(@@) % ه غناء معلل إغناء % ما مغن غناك ندا لمغن % 396(@)(@@) % رفده يجمع الغنى والغناء % ذاولا تنسني إذا نشر البس % % 397(@)(@@) % تان أوصناف وشيه وتراءى % % وحكتك الرياض في الحسن والطي % % 398(@)(@@) % ب وإن كان ذاك منها اعتداء % وتغنى القمري فيها أخاه % % 399(@)(@@) % وأجابت مكاءة مكاء % % وأبدتكلحظها قضب النر % % 400(@)(@@) % جس ميلا إليك تحكي النساء % بقعة لا تني تفاخر عطا % % PageV01P196 401(@)(@@) % را وتشجيبوشيها وشاء % % لم تزل تستعير منك جمالا % 402(@)(@@) % تكتسيهوتستمير ثناء % % فجمال لمنظر وثناء % 403(@)(@@) % لمشم يحكي نثاك ذكاء % % واهو قربي إذا شرعت على دج % 404(@)(@@) % لة في ظل ليلة قمراء % % وحكت دجلة انهلالك بالنا % % 405(@)(@@) % ئل والعلمواكتست لألاء % % وأعارت هواء دارك ثوبا % 406(@)(@@) % من نداهافكان ماء هواء % % فحكى منك نعمة الخلق النا % % 407(@)(@@) % عم في كل حالة إثناء % % وأجاب الملاح في بطنها المل % 408(@)(@@) % لاح يحتث بالسفين الحداء % % وادكرني إذا استثرت سحابا % 409(@)(@@) % ذات يوم عشية أو ضحاء % % فتعالت فوارة تحسد الخض % % 410(@)(@@) % راء إغداق مائها الغبراء % % كلما أخلفت سماء زمانا % PageV01P197 411(@)(@@) % خلفت فيه ديمة هطلاء % % سحسحت ماءها على أرض % 412(@)(@@) % بعدما صافحت به الجوزاء % % فحكت كفك التي تخلف المز % % 413(@)(@@) % ن علينا فترغم الأنواء % % وتأمل إذا لحظت بعيني % % 414(@)(@@) % ك صحونا لاتعرف الانتهاء % % وحكتك الصمان في سعة الصد % % 415(@)(@@) % ر وإن كان صدرك الدهناء % % جعل الله كل ذاك فداء % % 416(@)(@@) % لكإن كان للفداء كفاء % % لو بذلنا فداءك الشمس والبد % % 417(@)(@@) % رلقال الزمانزيدوا فداء % % لا تجاهل هناكيا من أبي الل % % 418(@)(@@) % ه عليه أن يشبه الجهلاء % % حسن علمي إذ ذاك بالحسن المو % % 419(@)(@@) % قع مما يروي القلوب الظماء % % وارتفاعي عن 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms46# الجفاة المسوي % % 420(@)(@@) % ن بشدو المجيدة الضوضاء % % موجب أن أكون أدنى جليس % % PageV01P198 421(@)(@@) % لكأعلو بحقي الجلساء % % أركيكا رأيت عبدكصفرا % % 422(@)(@@) % لاجنى فيه أم جنى شنعاء % % لاتدع مغرس الكريم من الغر % % 423(@)(@@) % س خلاء من الكريم قواء % % أين مثلي مفاتش لك أم أي % % 424(@)(@@) % ن نديم تعده ندماء % % شهد الله والموازين والقس % % 425(@)(@@) % ط جميعا شهادة إمضاء % % أن رأيي لذو الرجاحة وزنا % % 426(@)(@@) % دع يمينيوزنه والآراء % % أنت شهم محصل فاترك الأس % % 427(@)(@@) % ماء للبلهواكشف الأنباء % % ما تقصيت ما لدي ولا استق % % 428(@)(@@) % صيتفاجعل إقصاءك استقصاء % % وانتبه لي من رقدة الملك تعلم % % 429(@)(@@) % أن لله معشرا علماء % % وتذكر معاهدي إنك المر % % 430(@)(@@) % ء الذي ما عهدته نساء % % وارع لي حرمة المودة والخد % % PageV01P199 431(@)(@@) % مة والمدح تعجب الكرماء % % وجديرون بالرعاية قوم % % 432(@)(@@) % جعلتهم رعاة ملك رعاء % % قد تجرعت من جفائك لما % % 433(@)(@@) % سمتني ذاك شربة كدراء % % ولقد يقلب الكريم من السا % % 434(@)(@@) % دات نعماء عبده بأساء % % ظالما أو مقوما ثم يرعا % % 435(@)(@@) % ه ويقنى حرية وحياء % % فإذا زالت المسرة عادت % % 436(@)(@@) % وإذا ما تحسر الظل فاء % % فلماذا رمى هناك صفاتي % % 437(@)(@@) % أصفيائي عدمتهم أصفياء % % إنما كان حق مثلي أن ير % % 438(@)(@@) % حملاقوا أعداءهم رحماء % % بل رأوا رحمة الأعاديولا قو % % 439(@)(@@) % هم ملاء بعسفهم أوفياء % % وجزاهم رب الحزاء على ذا % % 440(@)(@@) % لك ما يشبه اللئيم جزاء % % معشر كنت خلتهم قبل بلوا % % PageV01P200 441(@)(@@) % ي أوداء صفوة أصدقاء % % صادفو نكبتي فكانت لديهم % % 442(@)(@@) % للقلوب المراض منهم شفاء % % وأظنوك أن ذاك وفاء % % 443(@)(@@) % من موال يصححون الولاء % % فبدا منهم بلاء ذميم % % 444(@)(@@) % أشبعوه خيانة ورياء % % ماأتى منهم نذير بعتب % % 445(@)(@@) % فيلقى هناك داء دواء % % لا ولا جاء بعد ذاك بشير % % 446(@)(@@) % برضا ثابت يقيم الذماء % % لا ولا جاء بين ذاك وهذا % % 447(@)(@@) % مترت يعلل الحوباء % % لم يواسوا ولم يؤسوا خليلا % % 448(@)(@@) % سوءة سوءة لهم سواء % % منعوا خيرهمولا تأمن الضر % % 449(@)(@@) % ر من المانعين منك الجداء % % فأتى شرهم على كل بقيا % % 450(@)(@@) % لا لقوا من ملمة إبقاء % % خلفوني خلافة الذئب في الش % % PageV01P201 451(@)(@@) % شاءوكانوا في جهل حقي شاء % % وإذا ما حماك عود جناه % % 452(@)(@@) % فاخش من حد شوكه أنكاء % % وكأني غدا أراهم وكل % % 453(@)(@@) % ينشر العذر طاويا شحناء % % سعر الله في الجوانح 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms47# منهم % % 454(@)(@@) % سعرة النارتلكم البغضاء % % لاعدتهم هناك هاتيك نارا % % 455(@)(@@) % وأصابت من شخصي الإخطاء % % حرقتهم وأرقتهم ولا زا % % 456(@)(@@) % لت وبالا عليهم ووباء % % رتعوا في وخيمة الغيب مني % % 457(@)(@@) % لا تلقي من ارتعاها مراء % % أظهروا للوزير جهلا وغدرا % % 458(@)(@@) % وعما هم يراهم أدباء % % فجلوا عورة لطرف جل ي % % 459(@)(@@) % حسبوا شمسه تغشت عماء % % جعلوا العبد كفء مولاهفانظر % % 460(@)(@@) % هل تراهم لعاقل أكفاء % % ما تعدوا بذاك أن وزنوني % % PageV01P202 461(@)(@@) % بكضلت عقولهم عقلاء % % غفلة فوق غفلة ثم سهوا % % 462(@)(@@) % فوق سهوعدمتهم أذكياء % % فلهم لائمون فيما أتوه % % 463(@)(@@) % ورأوهلا يعدموا اللوماء % % خذلوني وطأطئوا البدر جهلا % % 464(@)(@@) % وتظنوه يخبط الظلماء % % لاعفا الله عنهم بل عفاهم % % 465(@)(@@) % وزوى العفو عنهم لا العفاء % % ما ائتلاك الإخوانكلا بل الخو % % 466(@)(@@) % وان قاسوا أمثلهم خلطاء % % آفتي فيك أن رأيت محبا % % 467(@)(@@) % لايرى عنك بالغنى استغناء % % لاتطاول بحسن وجهك والدو % % 468(@)(@@) % لة واذكر من شانئيك الفناء % % واحتشم أن يراك معطيك ما أع % % 469(@)(@@) % طاك تجزي نعماءه خيلاء % % وارتفع أن يراك تكسو الفتى الحر % % 470(@)(@@) % ر إذا ما ملكته الإزراء % % إن من أضعف الضعاف لدى الل % PageV01P203 471(@)(@@) % ه قويا يستضعف الضعفاء % % ولأهل العقول فيه رجاء % % 472(@)(@@) % وعزاء يقاوم العزاء % % وتعلم متى حميت على عب % % 473(@)(@@) % دك تلك المياه والأكلاء % % أن الله غير مرعاك مرعى % % 474(@)(@@) % يرتعيهوغير مائك ماء % % وتيقن متى جنيت على عبد % % 475(@)(@@) % ك ضيما وضيعة وعناء % % أن لله بالبرية لطفا % % 476(@)(@@) % سبق الأمهات والآباء % % قد أطلت العتاب جداوأكثر % % 477(@)(@@) % ت فضولي لكن لي شركاء % % من دعاني إلى الذي كان مني % % 478(@)(@@) % فهو مثلي جلية لاامتراء % % أنا ذو القصد غير أني متى آ % % 479(@)(@@) % نست جورا رأيت لي غلواء % % والحليم العليم من يحسن الإي % % 480(@)(@@) % قاد بدءاويحسن الإطفاء % % والطبيب اللبيب من يتبع الدا % % PageV01P204 481(@)(@@) % ء دواء يشفيه لا الداء داء % % وعسى قائل يقول بجهل % % 482(@)(@@) % إنما يطلب الغنى والغناء % % ولهذين مطلب عند قوم % % 483(@)(@@) % لست ألفي لرحلهم غشاء % % والغنى واسع بكفي جواد % % 484(@)(@@) % يرزق الأغنياء والفقراء % % لي خمسون صاحبا لو سألت ال % % 485(@)(@@) % قوت فيهم ألفيتهم سمحاء % % أترى كل صاحب لي منهم % % 486(@)(@@) % يمنع الشهر بلغتي إجراء % % لي في درهمين في كل شهر % % 487(@)(@@) % من فئام ما يطرد الحوجاء % % والغناء الشديد شدوا وضربا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms48# % 488(@)(@@) % سحنة قد ملأت منها الإناء % % ولحسبي عرفان آل بنان % % 489(@)(@@) % وبنان شربا معينا رواء % % ظلت عشرا كواملا في مغاني % % 490(@)(@@) % ه أغني وأسمع الأنجاء % % فليقم كاشحي بنقض الذي قل % % PageV01P205 491(@)(@@) % ت وإلا فليطرق استحياء % % أو فرغما له هناك ودغما % % 492(@)(@@) % ألحم الله أنفه البوغاء % % لاتقدر بحسن وجهك صيدي % % 493(@)(@@) % بعد نفري كما تصيد الظباء % % صد بذاك المها تصدهاوهيها % % 494(@)(@@) % ت تصيد المصمم الأباء % % أنا ليث الليوث نفساوإن كن % % 495(@)(@@) % ت بجسمي ضئيلة رقشاء % % إنني إن نفرت أمعنت في النف % % 496(@)(@@) % رومثلي عمن تناءى تناءى % % لست باللقطة الخسيسة فاعرف % % 497(@)(@@) % لي قدريواسأل به الفهماء % % وانتفع بالعلا بذهنكواذمم % % 498(@)(@@) % كل ذهن لا ينفع الذهناء % % قد بغى قبلك الدعي فلم أح % % 499(@)(@@) % فل بأن كان باغيا بغاء % % بل تبصرت وانتظرت من الل % % 500(@)(@@) % ه نآدا تصيبه دهياء % % فاعتبر بابن بلبل إن فيه % % PageV01P206 501(@)(@@) % عبرة لامرىء أعد وعاء % % والعلاء بن صاعد قبل هذا % % 502(@)(@@) % قد حمى دون رائدي الأحماء % % فارم بالطرف شخصه هل تراه % % 503(@)(@@) % وادعه الدهر هل يجيب دعاء % % ليس إلا لأنني كنت شمسا % 504(@)(@@) % قابلت منه مقلة عشواء % % فأرانيه ناصري وأباه % % 505(@)(@@) % وله الحمد مثلة شوهاء % % أنا عبد الإنصافقرن التعدي % % 506(@)(@@) % فاسلك القصد بيوعد العداء % % أنا ذو صفحتينملساء حس % % 507(@)(@@) % ناءوأخرى تمسها خشناء % % خاشع تارة وجبار أخرى % % 508(@)(@@) % فتراني أرضا وطورا سماء % % لا بحول ولا بقوة ركن % % 509(@)(@@) % غير لبسي تجلدا وحياء % % أنا جلد على عناد الأحاظي % % 510(@)(@@) % وأبي أن أرأم النكراء % % فمتى شئت فامتحنيوأولى % % PageV01P207 511(@)(@@) % بك عفو يقابل استعفاء % % أنا ذاك الذي سقته يد السق % 512(@)(@@) % م كؤوسا من المرار رواء % % ورأيت الحمام في الصور الشن % 513(@)(@@) % عوكانت لولا القضاء قضاء % % ورماه الزمان في شقة النف % 514(@)(@@) % س فأصمى فؤاده إصماء % % وابتلاه بالعسر في ذاك والوح % 515(@)(@@) % شة حتى أمل منه البلاء % % وثكلت الشباب بعد رضاع % 516(@)(@@) % كان قبل الغذاء قدما غذاء % كل هذا لقيته فأبت نف % % 517(@)(@@) % سي إلا تعززا لااختتاء % % وأرى ذلتي تريك هواني % % 518(@)(@@) % ودنوي يزيدني إقصاء % % ومتى ما فزعت منك إلى الصب % 519(@)(@@) % ر فناديته أجاب النداء % % ومتى ما دعوت ربي على الده % % 520(@)(@@) % ر الخطوب لبى الدعاء % % وإباء الهوان عدوى أتتني % % PageV01P208 521(@)(@@) % منكوالعبد يقبل الإعداء % % أنت علمتني إباء الدنايا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms49# % % 522(@)(@@) % يا مليكيفما أسأت الأداء % % وعزيز علي أن قلت ما قل % % 523(@)(@@) % هتولكن حرقتني إحماء % % أنت شجعتني على الصدق في القو % % 524(@)(@@) % لوأركبت جنبي العوصاء % % قد نفثت الأدواء نفث ولي % 525(@)(@@) % والعدو المكمن الأدواء % % أنت أعلى من أن تقول أعدا % % 526(@)(@@) % ءك قولا يضرب الأولياء % % إن وزني في الرأي وزن ثقيل % % 527(@)(@@) % فاسأل الرأي عنه لا الأهواء % % يا جوادا هجا مديحيه بالحر % % 528(@)(@@) % مان ما اسطاع لاتكن هجاء % % إن بخس الثواب إن دام ظلما % 529(@)(@@) % قلب المدح ذات يوم هجاء % % ليس من قائل المديح ولكن % 530(@)(@@) % من أناس تدعوهم الغوغاء % أو من المنكرين وعظ المحقي % % PageV01P209 531(@)(@@) % ن وإن لم يلقبوا شعراء % % وبرغمي هناك تسمع أذنا % % 532(@)(@@) % ي ولكن من يضبط الدهماء % % والتكاليف لاتحد اتساعا % 533(@)(@@) % وكثير من ينصر البعداء % % كم رأيت المكلفين جنودا % 534(@)(@@) % ينصرون الأباعد الغرباء % % ولحى الله مسمعا لي فيكم % % 535(@)(@@) % يتوخى بمسخط إرضاء % % ولما سر جائعا رفد كف % 536(@)(@@) % أطعمته من شلوه أعضاء % % لو سواي استمال مال إليه % % 537(@)(@@) % ولألقى لناره حلفاء % % لكن الله شاهد أن نفسي % % 538(@)(@@) % تمنح السيف عند ذاك انتضاء % % لي عين هواي فيكم يريها % % 539(@)(@@) % من جلاها بلومكم إقذاء % % وجميل المقال فيكم وحظي % % 540(@)(@@) % من جداكم مما أراه سواء % % وأرى حر أن تلاموا حريقا % PageV01P210 541(@)(@@) % وأرى حر ظلمكم رمضاء % % فاظلموا جهدكم فلن تستطيعوا % % 542(@)(@@) % أبدا أن توغروا الأحشاء % % رسخ الحب في عظاميوجارى % % 543(@)(@@) % في عروقي قبل ذاك الغذاء % % ومن الجور أن تجازى يد بي % % 544(@)(@@) % ضاء من مخلص يدا سوداء % % موالذي ضم وده الأهواء % % 545(@)(@@) % والذي ساد غير مستنكر السؤ % % دد في الناسواعتلى كيف شاء % % 546(@)(@@) % قمر نجتليه ملء عيون % وصدور براعة وضياء % % 547(@)(@@) % لم يزل يجعل المساء صباحا % كلما بدل الصباح مساء % % 548(@)(@@) % قتل اليأس وهو مستحكم الأم % % روأحيا المطامع الأنضاء % % 549(@)(@@) % وارتضاه الأمير حين رآه % % وارتأى فيه رؤية وارتياء % % 550(@)(@@) % قال رأس الرؤوس لما رآه % % وصف البدر نفسه لاخفاء % % PageV01P211 551(@)(@@) % بشر البرق بالحياوسنا الصب % % ح بأن يقلب الدجى أضواء % % 552(@)(@@) % كل شيء أراه منك بشير % % صدق الله هذه البشراء % % 553(@)(@@) % وإذا مخابر الناس غابت % % عنك فاستشهد الوجوه الوضاء % % 554(@)(@@) % قال بالحق فيه ثم اجتباه % % واصطفاهوما أساء اصطفاء % % 555(@)(@@) % فغدا يوسع الرعية عدلا % % غير أني لقيت 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms50# منه اعتداء % % 556(@)(@@) % أجميل بك اطراحيوقد قد % دمت في رأيك الجميل رجاء % % 557(@)(@@) % ولي الطائر السعيد الذي كا % % ن بريدا بدولة زهراء % % 558(@)(@@) % ما تعرفت مذ تعيفت طيري % % غير نعماء ظاهرت نعماء % % 559(@)(@@) % ثم أدنيتني فزادك يمني % % من أمير مؤيد إدناء % % 560(@)(@@) % وتناولتني ببر فبرت % % ك يد الله ثرة بيضاء % % PageV01P212 561(@)(@@) % وكذا كلما نويت لمولا % % ك مزيدا أوتيتهوالهناء % % 562(@)(@@) % أنا مولاكأنت أعتقت رقي % % بعدما خفت حالة نكراء % % 563(@)(@@) % فعلام انصراف وجهك عني % % وتناسيكحاجتي إلغاء % % 564(@)(@@) % كان يأتيني الرسول فيهدي % % لي سروراويكبت الأعداء % % 565(@)(@@) % فقطعت الرسول عني ضنا % % باتخاذيه مفخرا وبهاء % % 566(@)(@@) % إن أكن غير محسن كل ما تط % % لب إني لمحسن أجزاء % % 567(@)(@@) % فمتى ما أردت صاحب فحص % % كنت ممن يشارك الحكماء % % 568(@)(@@) % ومتى ما أردت قارض شعر % % كنت ممن يساجل الشعراء % % 569(@)(@@) % ومتى ما خطبت منى خطيبا % جل خطبي ففاق بي الخطباء % % 570(@)(@@) % ومتى حاول الرسائل رسلي % % بلغتني بلاغتي البلغاء % % PageV01P213 571(@)(@@) % غير أني جعلت أمري إلى صف % % حك عن كل عورة إلجاء % % 572(@)(@@) % أنت ذاك الذي إذا لاح عيب % % جعل الستر دونه الإغضاء % % 573(@)(@@) % أنا عار من كل شيء سوى فض % % لكلا زلت كسوة وغطاء % % 574(@)(@@) % ولقائي إياك ماء الحياتي % % ن فلا تقطعن عني اللقاء % % 575(@)(@@) % سمني الخسف كله أقبل الخس % % ف بشكرولا تسمني الجفاء % % 576(@)(@@) % ليس بالناظرين صبر عن الوج % % ه الذي يجمع السنا والسناء % % 577(@)(@@) % منظر يملأ القلوب مع الأب % % صار نوراويضرح الأقذاء % % 578(@)(@@) % ليت شعري عن الفراسي والزج % جاج هل يرعيان مني الإخاء % % 579(@)(@@) % فيقولونإن موضع مولا % % ك عميرا أشف منه خلاء % % 580(@)(@@) % يالقوم أأثقل الأرض شخصي % % أم شكت من جفاء خلقي امتلاء % % PageV01P214 581(@)(@@) % أنا من خف واستدق فما يث % قل أرضا ولا يسد فضاء % % 582(@)(@@) % إن أكن عاطلا لديك من الآ % % لات حاشاك أن تجور غباء % % 583(@)(@@) % فلأكن عوذة لمجلسك المو % % نق أردد عين الردى عمياء % % 584(@)(@@) % أنا مولاكك بالمحبة والمي % ل فحمل عواتقي الأعباء % % 585(@)(@@) % وأنا المرء لا يحمل إلا % % شكر آلائكم لكم آلاء % % 586(@)(@@) % أدن شخصي إذا شدت لك بستا % % نوغنت غناءها غناء % 587(@)(@@) % فاستثارت من اللحود المغن % نين فأضحى أمواتهم أحياء % 588(@)(@@) % يالإحضارها مع إبن سريج % معبدا والغريض والميلاء % 589(@)(@@) % وتلتها عجائب فتغنت % مشبهات اسمها صيابا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms51# ولاء % 590(@)(@@) % فحكت هذه وتلك يميني % ك إذا ما تبارتا إعطاء % PageV01P215 591(@)(@@) % وأبى الله عند ذلك أشبا % % ه غناء معلل إغناء % 592(@)(@@) % ما مغن غناك ندا لمغن % رفده يجمع الغنى والغناء % 593(@)(@@) % ذاولا تنسني إذا نشر البس % % تان أوصناف وشيه وتراءى % % 594(@)(@@) % وحكتك الرياض في الحسن والطي % % ب وإن كان ذاك منها اعتداء % 595(@)(@@) % وتغنى القمري فيها أخاه % % وأجابت مكاءة مكاء % % 596(@)(@@) % وأبدتكلحظها قضب النر % % جس ميلا إليك تحكي النساء % 597(@)(@@) % بقعة لا تني تفاخر عطا % % را وتشجيبوشيها وشاء % % 598(@)(@@) % لم تزل تستعير منك جمالا % تكتسيهوتستمير ثناء % % 599(@)(@@) % فجمال لمنظر وثناء % لمشم يحكي نثاك ذكاء % % 600(@)(@@) % واهو قربي إذا شرعت على دج % لة في ظل ليلة قمراء % % PageV01P216 601(@)(@@) % وحكت دجلة انهلالك بالنا % % ئل والعلمواكتست لألاء % % 602(@)(@@) % وأعارت هواء دارك ثوبا % من نداهافكان ماء هواء % % 603(@)(@@) % فحكى منك نعمة الخلق النا % % عم في كل حالة إثناء % % 604(@)(@@) % وأجاب الملاح في بطنها المل % لاح يحتث بالسفين الحداء % % 605(@)(@@) % وادكرني إذا استثرت سحابا % ذات يوم عشية أو ضحاء % % 606(@)(@@) % فتعالت فوارة تحسد الخض % % راء إغداق مائها الغبراء % % 607(@)(@@) % كلما أخلفت سماء زمانا % خلفت فيه ديمة هطلاء % % 608(@)(@@) % سحسحت ماءها على أرض % بعدما صافحت به الجوزاء % % 609(@)(@@) % فحكت كفك التي تخلف المز % % ن علينا فترغم الأنواء % % 610(@)(@@) % وتأمل إذا لحظت بعيني % % ك صحونا لاتعرف الانتهاء % % PageV01P217 611(@)(@@) % وحكتك الصمان في سعة الصد % % ر وإن كان صدرك الدهناء % % 612(@)(@@) % جعل الله كل ذاك فداء % % لكإن كان للفداء كفاء % % 613(@)(@@) % لو بذلنا فداءك الشمس والبد % % رلقال الزمانزيدوا فداء % % 614(@)(@@) % لا تجاهل هناكيا من أبي الل % % ه عليه أن يشبه الجهلاء % % 615(@)(@@) % حسن علمي إذ ذاك بالحسن المو % % قع مما يروي القلوب الظماء % % 616(@)(@@) % وارتفاعي عن الجفاة المسوي % % ن بشدو المجيدة الضوضاء % % 617(@)(@@) % موجب أن أكون أدنى جليس % % لكأعلو بحقي الجلساء % % 618(@)(@@) % أركيكا رأيت عبدكصفرا % % لاجنى فيه أم جنى شنعاء % % 619(@)(@@) % لاتدع مغرس الكريم من الغر % % س خلاء من الكريم قواء % % 620(@)(@@) % أين مثلي مفاتش لك أم أي % % ن نديم تعده ندماء % % PageV01P218 621(@)(@@) % شهد الله والموازين والقس % % ط جميعا شهادة إمضاء % % 622(@)(@@) % أن رأيي لذو الرجاحة وزنا % % دع يمينيوزنه والآراء % % 623(@)(@@) % أنت شهم محصل فاترك الأس % % ماء للبلهواكشف الأنباء % % 624(@)(@@) % ما تقصيت ما 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms52# لدي ولا استق % % صيتفاجعل إقصاءك استقصاء % % 625(@)(@@) % وانتبه لي من رقدة الملك تعلم % % أن لله معشرا علماء % % 626(@)(@@) % وتذكر معاهدي إنك المر % % ء الذي ما عهدته نساء % % 627(@)(@@) % وارع لي حرمة المودة والخد % % مة والمدح تعجب الكرماء % % 628(@)(@@) % وجديرون بالرعاية قوم % % جعلتهم رعاة ملك رعاء % % 629(@)(@@) % قد تجرعت من جفائك لما % % سمتني ذاك شربة كدراء % % 630(@)(@@) % ولقد يقلب الكريم من السا % % دات نعماء عبده بأساء % % PageV01P219 631(@)(@@) % ظالما أو مقوما ثم يرعا % % ه ويقنى حرية وحياء % % 632(@)(@@) % فإذا زالت المسرة عادت % % وإذا ما تحسر الظل فاء % % 633(@)(@@) % فلماذا رمى هناك صفاتي % % أصفيائي عدمتهم أصفياء % % 634(@)(@@) % إنما كان حق مثلي أن ير % % حملاقوا أعداءهم رحماء % % 635(@)(@@) % بل رأوا رحمة الأعاديولا قو % % هم ملاء بعسفهم أوفياء % % 636(@)(@@) % وجزاهم رب الحزاء على ذا % % لك ما يشبه اللئيم جزاء % % 637(@)(@@) % معشر كنت خلتهم قبل بلوا % % ي أوداء صفوة أصدقاء % % 638(@)(@@) % صادفو نكبتي فكانت لديهم % % للقلوب المراض منهم شفاء % % 639(@)(@@) % وأظنوك أن ذاك وفاء % % من موال يصححون الولاء % % 640(@)(@@) % فبدا منهم بلاء ذميم % % أشبعوه خيانة ورياء % % PageV01P220 641(@)(@@) % ماأتى منهم نذير بعتب % % فيلقى هناك داء دواء % % 642(@)(@@) % لا ولا جاء بعد ذاك بشير % % برضا ثابت يقيم الذماء % % 643(@)(@@) % لا ولا جاء بين ذاك وهذا % % مترت يعلل الحوباء % % 644(@)(@@) % لم يواسوا ولم يؤسوا خليلا % % سوءة سوءة لهم سواء % % 645(@)(@@) % منعوا خيرهمولا تأمن الضر % % ر من المانعين منك الجداء % % 646(@)(@@) % فأتى شرهم على كل بقيا % % لا لقوا من ملمة إبقاء % % 647(@)(@@) % خلفوني خلافة الذئب في الش % % شاءوكانوا في جهل حقي شاء % % 648(@)(@@) % وإذا ما حماك عود جناه % % فاخش من حد شوكه أنكاء % % 649(@)(@@) % وكأني غدا أراهم وكل % % ينشر العذر طاويا شحناء % % 650(@)(@@) % سعر الله في الجوانح منهم % % سعرة النارتلكم البغضاء % % PageV01P221 651(@)(@@) % لاعدتهم هناك هاتيك نارا % % وأصابت من شخصي الإخطاء % % 652(@)(@@) % حرقتهم وأرقتهم ولا زا % % لت وبالا عليهم ووباء % % 653(@)(@@) % رتعوا في وخيمة الغيب مني % % لا تلقي من ارتعاها مراء % % 654(@)(@@) % أظهروا للوزير جهلا وغدرا % % وعما هم يراهم أدباء % % 655(@)(@@) % فجلوا عورة لطرف جل ي % % حسبوا شمسه تغشت عماء % % 656(@)(@@) % جعلوا العبد كفء مولاهفانظر % % هل تراهم لعاقل أكفاء % % 657(@)(@@) % ما تعدوا بذاك أن وزنوني % % بكضلت عقولهم عقلاء % % 658(@)(@@) % غفلة فوق غفلة ثم سهوا % % فوق 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms53# سهوعدمتهم أذكياء % % 659(@)(@@) % فلهم لائمون فيما أتوه % % ورأوهلا يعدموا اللوماء % % 660(@)(@@) % خذلوني وطأطئوا البدر جهلا % % وتظنوه يخبط الظلماء % % PageV01P222 661(@)(@@) % لاعفا الله عنهم بل عفاهم % % وزوى العفو عنهم لا العفاء % % 662(@)(@@) % ما ائتلاك الإخوانكلا بل الخو % % وان قاسوا أمثلهم خلطاء % % 663(@)(@@) % آفتي فيك أن رأيت محبا % % لايرى عنك بالغنى استغناء % % 664(@)(@@) % لاتطاول بحسن وجهك والدو % % لة واذكر من شانئيك الفناء % % 665(@)(@@) % واحتشم أن يراك معطيك ما أع % % طاك تجزي نعماءه خيلاء % % 666(@)(@@) % وارتفع أن يراك تكسو الفتى الحر % % ر إذا ما ملكته الإزراء % % 667(@)(@@) % إن من أضعف الضعاف لدى الل % ه قويا يستضعف الضعفاء % % 668(@)(@@) % ولأهل العقول فيه رجاء % % وعزاء يقاوم العزاء % % 669(@)(@@) % وتعلم متى حميت على عب % % دك تلك المياه والأكلاء % % 670(@)(@@) % أن الله غير مرعاك مرعى % % يرتعيهوغير مائك ماء % % PageV01P223 671(@)(@@) % وتيقن متى جنيت على عبد % % ك ضيما وضيعة وعناء % % 672(@)(@@) % أن لله بالبرية لطفا % % سبق الأمهات والآباء % % 673(@)(@@) % قد أطلت العتاب جداوأكثر % % ت فضولي لكن لي شركاء % % 674(@)(@@) % من دعاني إلى الذي كان مني % % فهو مثلي جلية لاامتراء % % 675(@)(@@) % أنا ذو القصد غير أني متى آ % % نست جورا رأيت لي غلواء % % 676(@)(@@) % والحليم العليم من يحسن الإي % % قاد بدءاويحسن الإطفاء % % 677(@)(@@) % والطبيب اللبيب من يتبع الدا % % ء دواء يشفيه لا الداء داء % % 678(@)(@@) % وعسى قائل يقول بجهل % % إنما يطلب الغنى والغناء % % 679(@)(@@) % ولهذين مطلب عند قوم % % لست ألفي لرحلهم غشاء % % 680(@)(@@) % والغنى واسع بكفي جواد % % يرزق الأغنياء والفقراء % % PageV01P224 681(@)(@@) % لي خمسون صاحبا لو سألت ال % % قوت فيهم ألفيتهم سمحاء % % 682(@)(@@) % أترى كل صاحب لي منهم % % يمنع الشهر بلغتي إجراء % % 683(@)(@@) % لي في درهمين في كل شهر % % من فئام ما يطرد الحوجاء % % 684(@)(@@) % والغناء الشديد شدوا وضربا % سحنة قد ملأت منها الإناء % % 685(@)(@@) % ولحسبي عرفان آل بنان % % وبنان شربا معينا رواء % % 686(@)(@@) % ظلت عشرا كواملا في مغاني % % ه أغني وأسمع الأنجاء % % 687(@)(@@) % فليقم كاشحي بنقض الذي قل % % ت وإلا فليطرق استحياء % % 688(@)(@@) % أو فرغما له هناك ودغما % % ألحم الله أنفه البوغاء % % 689(@)(@@) % لاتقدر بحسن وجهك صيدي % % بعد نفري كما تصيد الظباء % % 690(@)(@@) % صد بذاك المها تصدهاوهيها % % ت تصيد المصمم الأباء % % PageV01P225 691(@)(@@) % أنا ليث الليوث نفساوإن كن % % ت بجسمي ضئيلة رقشاء % % 692(@)(@@) % إنني إن نفرت 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms54# أمعنت في النف % % رومثلي عمن تناءى تناءى % % 693(@)(@@) % لست باللقطة الخسيسة فاعرف % % لي قدريواسأل به الفهماء % % 694(@)(@@) % وانتفع بالعلا بذهنكواذمم % % كل ذهن لا ينفع الذهناء % % 695(@)(@@) % قد بغى قبلك الدعي فلم أح % % فل بأن كان باغيا بغاء % % 696(@)(@@) % بل تبصرت وانتظرت من الل % % ه نآدا تصيبه دهياء % % 697(@)(@@) % فاعتبر بابن بلبل إن فيه % % عبرة لامرىء أعد وعاء % % 698(@)(@@) % والعلاء بن صاعد قبل هذا % % قد حمى دون رائدي الأحماء % % 699(@)(@@) % فارم بالطرف شخصه هل تراه % % وادعه الدهر هل يجيب دعاء % % 700(@)(@@) % ليس إلا لأنني كنت شمسا % قابلت منه مقلة عشواء % % PageV01P226 701(@)(@@) % فأرانيه ناصري وأباه % % وله الحمد مثلة شوهاء % % 702(@)(@@) % أنا عبد الإنصافقرن التعدي % % فاسلك القصد بيوعد العداء % % 703(@)(@@) % أنا ذو صفحتينملساء حس % % ناءوأخرى تمسها خشناء % % 704(@)(@@) % خاشع تارة وجبار أخرى % % فتراني أرضا وطورا سماء % % 705(@)(@@) % لا بحول ولا بقوة ركن % % غير لبسي تجلدا وحياء % % 706(@)(@@) % أنا جلد على عناد الأحاظي % % وأبي أن أرأم النكراء % % 707(@)(@@) % فمتى شئت فامتحنيوأولى % % بك عفو يقابل استعفاء % % 708(@)(@@) % أنا ذاك الذي سقته يد السق % م كؤوسا من المرار رواء % % 709(@)(@@) % ورأيت الحمام في الصور الشن % عوكانت لولا القضاء قضاء % % 710(@)(@@) % ورماه الزمان في شقة النف % س فأصمى فؤاده إصماء % % PageV01P227 711(@)(@@) % وابتلاه بالعسر في ذاك والوح % شة حتى أمل منه البلاء % % 712(@)(@@) % وثكلت الشباب بعد رضاع % كان قبل الغذاء قدما غذاء % 713(@)(@@) % كل هذا لقيته فأبت نف % % سي إلا تعززا لااختتاء % % 714(@)(@@) % وأرى ذلتي تريك هواني % % ودنوي يزيدني إقصاء % % 715(@)(@@) % ومتى ما فزعت منك إلى الصب % ر فناديته أجاب النداء % % 716(@)(@@) % ومتى ما دعوت ربي على الده % % ر الخطوب لبى الدعاء % % 717(@)(@@) % وإباء الهوان عدوى أتتني % % منكوالعبد يقبل الإعداء % % 718(@)(@@) % أنت علمتني إباء الدنايا % % يا مليكيفما أسأت الأداء % % 719(@)(@@) % وعزيز علي أن قلت ما قل % % تولكن حرقتني إحماء % % 720(@)(@@) % أنت شجعتني على الصدق في القو % % لوأركبت جنبي العوصاء % % PageV01P228 721(@)(@@) % قد نفثت الأدواء نفث ولي % والعدو المكمن الأدواء % % 722(@)(@@) % أنت أعلى من أن تقول أعدا % % ءك قولا يضرب الأولياء % % 723(@)(@@) % إن وزني في الرأي وزن ثقيل % % فاسأل الرأي عنه لا الأهواء % % 724(@)(@@) % يا جوادا هجا مديحيه بالحر % % مان ما اسطاع لاتكن هجاء % % 725(@)(@@) % إن بخس الثواب إن دام ظلما % قلب المدح 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms55# ذات يوم هجاء % % 726(@)(@@) % ليس من قائل المديح ولكن % من أناس تدعوهم الغوغاء % 727(@)(@@) % أو من المنكرين وعظ المحقي % % ن وإن لم يلقبوا شعراء % % 728(@)(@@) % وبرغمي هناك تسمع أذنا % % ي ولكن من يضبط الدهماء % % 729(@)(@@) % والتكاليف لاتحد اتساعا % وكثير من ينصر البعداء % % 730(@)(@@) % كم رأيت المكلفين جنودا % ينصرون الأباعد الغرباء % % PageV01P229 731(@)(@@) % ولحى الله مسمعا لي فيكم % % يتوخى بمسخط إرضاء % % 732(@)(@@) % ولما سر جائعا رفد كف % أطعمته من شلوه أعضاء % % 733(@)(@@) % لو سواي استمال مال إليه % % ولألقى لناره حلفاء % % 734(@)(@@) % لكن الله شاهد أن نفسي % % تمنح السيف عند ذاك انتضاء % % 735(@)(@@) % لي عين هواي فيكم يريها % % من جلاها بلومكم إقذاء % % 736(@)(@@) % وجميل المقال فيكم وحظي % % من جداكم مما أراه سواء % % 737(@)(@@) % وأرى حر أن تلاموا حريقا % وأرى حر ظلمكم رمضاء % % 738(@)(@@) % فاظلموا جهدكم فلن تستطيعوا % % أبدا أن توغروا الأحشاء % % 739(@)(@@) % رسخ الحب في عظاميوجارى % % في عروقي قبل ذاك الغذاء % % 740(@)(@@) % ومن الجور أن تجازى يد بي % % ضاء من مخلص يدا سوداء % % PageV01P230 741(@)(@@) % هنكم أعنى فلا أسيء عتابا % كم أمنى فلا أسيء اقتضاء % % 742(@)(@@) % فاستوائي إذا رأيت استواء % والتوائي إذا رأيت التواء % % 743(@)(@@) % أين عني سعادة من سعيد % جدكم لا برحتم سعداء % % 744(@)(@@) % أين عني سلامة من سليما % % ن تقيني بدرعها أن أساء % 745(@)(@@) % أين عني قسم الوزير أبي القا % % سم أحرار ماله أنصباء % % 746(@)(@@) % أين عني إحسان صنوين قدا ال % % حسن قدا تسميا واكتناء % % 747(@)(@@) % ما توهمت أن حقي عليكم % % آل وهب يجشم استبطاء % % 748(@)(@@) % ياابن من لم يزل يخوض الوزارا % % ت ومن قبل يخلف الوزراء % % 749(@)(@@) % قد مضى أكثر الشتاءوجاء الصي % % ف يعدو فلا تزده التظاء % % 750(@)(@@) % يا عليما بما أكابد فيه % % لاتعاونه إن فيه اكتفاء % % PageV01P231 751(@)(@@) % أنا راج جميل ردعك إيا % % ه فلا تجعلنه إغراء % % 752(@)(@@) % لا تعن ناره على الشي والطب % % خ كفى طابخا بها شواء % % 753(@)(@@) % الأمان الأمان منك ومنه % % جنباني لظاكما الكواء % % 754(@)(@@) % بل إذا ما عدا فأعد عليه % % لا تكونن مثله عداء % % 755(@)(@@) % لا تعاقب بما التواء أخوه % % أعقابا تريد بي أم تواء % % 756(@)(@@) % إن تأرى علي عتبك والصي % % ف وحاشاي كان ذاك الجلاء % % 757(@)(@@) % لا تدعني سدى فترقي مني % % حية لا تطاوع الرقاء % % 758(@)(@@) % لا عدمتم بحلمكم 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms56# آل وهب % من ولي تسحبا واجتراء % % PageV01P232 البحر : - 1(@)(@@) % يا ذائق الموتى لتعلم هل بقوا % % بعد التقادم منهم بدواء % 2(@)(@@) % بينت عن رعة وصدق أمانة % لولا اتهامك خالق الأشياء % 3(@)(@@) % أحسبت أن الله ليس بقادر % % أن يجعل الأموات كالأحياء % % 4(@)(@@) % وظننت ما شاهدت من آياته % % بلطيفة من حيلة الحكماء % % PageV01P233 البحر : - 1(@)(@@) % ما أستزيد لقاسم % من ربه غير البقاء % % 2(@)(@@) % وكذاك لست أريد من % % ه سوى البقاء مع اللقاء % 3(@)(@@) % حسبي بذاك سعادة % فيها الأمان من الشقاء % % 4(@)(@@) % كفلت بكبت للعدا % % ومسرة للأصدقاء % % 5(@)(@@) % والله بعد يزيده % % أعلى منالة ذي ارتقاء % % 6(@)(@@) % ويزيدني من غيثه % % وغياثه الهزم السقاء % % 7(@)(@@) % ملك كأن خلاله % % خلقت له بعد انتقاء % % 8(@)(@@) % عافيه علق صيانة % وثراؤه ترس اتقاء % % 9(@)(@@) % يلقاك نشر ثنائه % % ونسيمه قبل اللقاء % % 10(@)(@@) % كم قد وردت سماحه % % فسقيت منه بلا استقاء % % PageV01P234 11(@)(@@) % كم زارني معروفه % % من قبل وعد بالتقاء % % 12(@)(@@) % هل من وفاء كفؤه % % فيفي حقيقا بالوفاء % % PageV01P235 البحر : - 1(@)(@@) % ليت شعري من ناكه بهجائي % % من هجاني له من الشعراء % % 2(@)(@@) % من عذيري يا قوم من أشبه الأم % مة بابن الكراعة القطعاء % % 3(@)(@@) % يشتري باسته هجائي لقد قا % % مت عليه عداوتي بالغلاء % % 4(@)(@@) % مهره كفء عقره بل كثير % % ذلك المهر لاسته البخراء % % PageV01P236 البحر : - 1(@)(@@) % فتى لا يرى تأخير غوث وليه % % ولايقتضيه الشكربالعرض الأدنى % % 2(@)(@@) % ولكنه يعطي البلاغ إلى الغنى % % إلى أن يعين الوجد همته الكبرى % % 3(@)(@@) % هنالك يدعو الشاكرين لشكره % % بغير لسان بل بألسنة الجدوى % % 4(@)(@@) % ولا عيب فيه غير أني صحبته % % وليا فأعشى ناظري خشعة المولى % % 5(@)(@@) % تعبدني بالعرف حتى استذلني % % على أن في نفسي على غيره طغوى % % PageV01P237 البحر : - 1(@)(@@) % ألاليت شعري هل تؤخر حاجتي % % لأولى بشكر منك أو بثناء % % 2(@)(@@) % غرست يدا حتى إذا آن حملها % % شكت منك إغفالا وطول جفاء % % 3(@)(@@) % ثنائي لاتسبق إليه فإنه % % خلود لما تبنيوطول بقاء % % 4(@)(@@) % وتمم يدا أسديتها ينم شكرها % % غداة غد في الناس أي نماء % % 5(@)(@@) % لعمري لقد أعطاك محمود حمده % % أمير غدا من سادة الأمراء % % 6(@)(@@) % وياحسن ذاك الحمد إن أنت زنته % بحمد امرىء من سادة الشعراء % % PageV01P238 البحر : - 1(@)(@@) % ياخالد بن الخالدات مخازيا % مادام فوق الأرض ظل سماء % % 2(@)(@@) % لله درك أي صاحب حيلة % أصبحت فيها واحد الحكماء 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms57# % % 3(@)(@@) % لما غدا العار الذي سربلته % % أحدوثة الركبان والأملاء % % 4(@)(@@) % عرضت للشعراء عرضك عامدا % % كيما يقالتكذب الشعراء % % 5(@)(@@) % لايعجبنك ماصنعت فإنما % % داويت داءكيا شقيبداء % % PageV01P239 البحر : - 1(@)(@@) % أخالد يابن الخالدات مخازيا % % ماذا دعاك إلى اكتساب هجائي % % 2(@)(@@) % لله در أبيك أية حيلة % % لو أنها جازت على الفهماء % % 3(@)(@@) % لما بدالك أن خزيك قد غدا % % أحدوثة الركبان والأملاء % % 4(@)(@@) % عرضت للشعراء عرضك عامدا % % كيما يقالتكذب الشعراء % % 5(@)(@@) % بل كنت فيما حدت عنه ولم تئل % % كالمستجير لظى من الرمضاء % % 6(@)(@@) % يا شاعرا يهجو نسية خالد % عنك الهجاءكفاك بالأسماء % % 7(@)(@@) % أسماؤهن هجاؤهنومن يقل % % أفعى يبن لاشك عن صماء % % 8(@)(@@) % لاتحسبنك في هجائك تفتري % % مالم يجئن به من الفحشاء % % PageV01P240 البحر : - 1(@)(@@) % يظلم الناس في القيادة أفرى % % أنت منه باللوم أولى وأحرى % % 2(@)(@@) % كان للكركدن قرن فأضحى % % قرنه اليوم عند قرنك مدرى % % 3(@)(@@) % من يكن قرنه كقرنك هذا % % فليكن بابه كإيوان كسرى % % PageV01P241 البحر : - 1(@)(@@) % يا ابن بورانجعلت فدائي % % عشت في غبطة وفي نعماء % % 2(@)(@@) % بخبخ بخبخ لأمك ما أس % ور هماتها إلى العلياء % % 3(@)(@@) % ناقضت مريم العفاف فلما % % قاومتها سمت إلى حواء % % 4(@)(@@) % فانتحت في الزنا تكاثر حوا % % ء عديد البنات والأبناء % % 5(@)(@@) % كيف أهجو امرأ كريما لئيما % % واحد الأم خلفة الآباء % % 6(@)(@@) % كيف أهجو مذبذبا بين شتى % % لاإلى هؤلاء ولا هؤلاء % % 7(@)(@@) % كيف أهجو من فيه مجتمع الأن % % ساب طراوملتقى الأحياء % % 8(@)(@@) % إنما أستطيب كدك في شع % % رك يا ابن الخبازة البظراء % % 9(@)(@@) % فكأني أراك في عكر الفك % % ر توالي تنفس الصعداء % % 10(@)(@@) % مجلبا مغبرا كأنك في شي % % ء ألا ضيعة لذاك العناء % % PageV01P242 11(@)(@@) % وكأني أراك تهتفإيه % % تزجر الشعر حضرة الغوغاء % % 12(@)(@@) % مستميلا أسماعهم لهجائي % % بنباح ملحن بعواء % % 13(@)(@@) % قد أصاخوا وأنت تيعر كالتي % % س وهم ضامرون مثل الشاء % % 14(@)(@@) % فاهجنيإنما هجاؤك عندي % % ضحكات تزيد في السراء % % 15(@)(@@) % أنا في غبطة بها وسرور % % ملء صدريوأنت في برحاء % % 16(@)(@@) % ومحال أن يسعد السعداء ال % % دهر إلا بشقوة الأشقياء % % 17(@)(@@) % أنا هاجيك ماسكتومعفي % % ك إذا ما هجوتني من هجائي % % 18(@)(@@) % ليس ينجيك من يدي سوى ذا % % ك ولو كنت في بروج السماء % % 19(@)(@@) % ويمينا لألعبن بأشلا % % ئك بين الإشواء والإصماء % % 20(@)(@@) % هاجيامادحاومتخذا إيا % % ك ملهى وعرضة استهزاء % % PageV01P243 البحر : - 1(@)(@@) % هاجرني ظلما أبو 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms58# حفصل % فأصبحت أعداؤنا جذلى % % 2(@)(@@) % مازحته في بعض أيامه % % فصار في النفخة كالحبلى % % 3(@)(@@) % مالي لم أغضب على عرسه % % إذ سلحت في لحيتي السفلى % % 4(@)(@@) % طعنتها أسفل وجعائها % % فانبجست من ثقبها الأعلى % % PageV01P244 البحر : - 1(@)(@@) % ألاأيهاالمطري العلاء بن صاعد % وشاكره في نية وثناء % % 2(@)(@@) % شكرت امرأ ينمي على الشكر عرفه % ويأبى على الكفران غير نماء % % 3(@)(@@) % فتى نال غايات الكهول وجازها % % على جدة من سنهوفتاء % % 4(@)(@@) % كما بهر البدر النجوم لأربع % % وعشر فأمست غير ذات ضياء % % 5(@)(@@) % وحسب أبي عيسى العلاء بأنه % % يعد بديئا سيد الحكماء % % 6(@)(@@) % وأن أباه الخير طال بقاؤه % % يعد بديئا سيد الوزراء % % 7(@)(@@) % وأن الأمير المستنيم إليهما % % يعد بديئا سيد الأمراء % % 8(@)(@@) % وأن الخطيب الصادق القول فيهما % % يعد بديئا سيد الخطباء % % 9(@)(@@) % خطيبعصاه الرمح والسيف لم يزل % % وآباؤه يبلون خير بلاء % % 10(@)(@@) % كنوز غنى للمقترينوإن دعوا % % لنائرة كانوا كنوز غناء % % PageV01P245 11(@)(@@) % وهذي أمور وفقت لابن صاعد % % أمارات جد صاعدوبقاء % % 12(@)(@@) % ومازال ممدوحا بحق معظما % % على ألسن الأشراف والعظماء % % 13(@)(@@) % وما يضع المرء الشريف امتداحه % علاءولايحذيه غير علاء % 14(@)(@@) % وهل يضع الطود المنيف اعترافه % % لناصبه بالعدل تحت سماء % % PageV01P246 البحر : - 1(@)(@@) % ليس كالسكر دواء % % لغناء كالدواء % % 2(@)(@@) % فاسقني عشرون رطلا % لا تشبهن بماء % % 3(@)(@@) % فلعل السكر يكفي % % ني أذى هذا العواء % % 4(@)(@@) % من رأى منتحيا غي % % ري على سوء الغناء % % PageV01P247 البحر : - 1(@)(@@) % قل لعبدالقوي أنت قوي % % فاتق اللهويكفي الضعفاء % 2(@)(@@) % نحن جموأنت أقرن والل % ه حسيب القرناء للجماء % % 3(@)(@@) % لو علمت الخفي من كل علم % % جامعا بينه وبين البغاء % % 4(@)(@@) % أعجب الناس ماوعيت وقالوا % % عسل طيب خبيث الوعاء % % PageV01P248 البحر : - 1(@)(@@) % مخففة مثقلة تراها % % كأن لم يغذ نصفيها غذاء % 2(@)(@@) % إذا الإغباب جدد حسن شيء % % من الأشياء جددها اللقاء % % 3(@)(@@) % لها ريق تشف له الثنايا % % وتروي عنه لامنه الظماء % 4(@)(@@) % وأنفاس كأنفاس الخزامى % % قبيل الصبح بلتها السماء % % 5(@)(@@) % تنفس نشرها سحرا فجاءت % به سحرية المسرى رخاء % % PageV01P249 البحر : - 1(@)(@@) % مالقينا من ظرف ضرطة وهب % صيرت أهل دهرنا شعراء % % 2(@)(@@) % هي عندي كجود فضل بن يحيى % % غير أن ليس تنعش الفقراء % % PageV01P250 البحر : - 1(@)(@@) % ليت شعري عن خالد كيف أمسى % % من حكاك استهوحر هجائي % % 2(@)(@@) % جمعت شقوة الشقي عليه % % كل خزيوكل داء عياء % % 3(@)(@@) % لوعلمت الذي يقاسي من 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms59# الأم % رين عزيته صباح مساء % % 4(@)(@@) % أيهذا المسائلي عن سعيد % وشقيولات حين خفاء % % 5(@)(@@) % أنا في الأرض محنة فاتخذني % % محنة الأشقياء والسعداء % % 6(@)(@@) % من تحامى عداوتي فسعيد % % ومعادي أول الأشقياء % % PageV01P251 البحر : - 1(@)(@@) % سوءةسوءة لك ابن البراء % % يا بديل الخراء عند الخراء % % 2(@)(@@) % شغلتك الذنوب عنا فأعرض % % ت عن الصالحات للفحشاء % % 3(@)(@@) % تركب الشقر غير ساع لمجد % % بل لعار وسبة شنعاء % 4(@)(@@) % ذاك ظنيولست أدري يقينا % % تعتلي أو تنوء بالأعباء % % 5(@)(@@) % ليت شعريأمركب أنت في الهي % % جاء أم من فوارس الهيجاء % % 6(@)(@@) % أم كلا المعنين فيك جميعا % حين تحلو بالقصة العوراء % % 7(@)(@@) % إن يكن كل ذاك فيك فهذا % % مذهب من مذاهب الفقهاء % % 8(@)(@@) % لايرون الجروح إلا قصاصا % % ورعا منهموعدل قضاء % % 9(@)(@@) % بل يقصون قبل أن يوقعوا الجر % % ح ركوبا للسنة البيضاء % % 10(@)(@@) % يسلفون القصاص من جرحوه % % قبل أن يجرحوه وزن السواء % % PageV01P252 11(@)(@@) % ليت شعريأذاك حكم أبي مو % % سى بغاء أم ذاك حكم البغاء % % 12(@)(@@) % لاتلمنا وإن أسأنا ثناء % % أنت مستأهل لسوء الثناء % % PageV01P253 البحر : - 1(@)(@@) % فقدتك يابن أبي طاهر % % وأطعمت ثكلك قبل العشاء % % 2(@)(@@) % فلا برد شعرك برد الشراب % % ولاحر شعرك حر الصلاء % % 3(@)(@@) % تذبذب فنك بين الفنون % % فلا للطبيخ ولا للشواء % % PageV01P254 البحر : - 1(@)(@@) % قال لعبد القوي تبا لعلم % لم يجد غير عالم بغاء % % 2(@)(@@) % سوءةسوءة لعالم علم % جامع بينه وبين البغاء % % PageV01P255 البحر : - 1(@)(@@) % يقول القائلونضويت جدا % ولم تنضجك أرحام النساء % % 2(@)(@@) % ومن إنضاجها إياي أعرت % % عظامي من لحومهم الوطاء % % 3(@)(@@) % إذا ماكنت ذا عود صليب % % فيكفيني القليل من اللحاء % % PageV01P256 البحر : - 1(@)(@@) % زعم الناس خالد بغاء % % كذبوا القولوافتروه افتراء % % 2(@)(@@) % إنما صادفوه يلمس غرمو % % لا فواراه في استه استحياء % % 3(@)(@@) % فلحوه فيه فصار لجاجا % وهو شيخ يراغم الأعداء % % 4(@)(@@) % فليكفوا عن الجدال وإلا % % فليكونوا له إذا نظراء % % PageV01P257 البحر : - 1(@)(@@) % لم يصف الدواء جسمك إلا % % عن صفاء كما يكون الصفاء % % 2(@)(@@) % فلأعدائك البشاعة منه % % ولك النفع دونهم والشفاء % % PageV01P258 البحر : - 1(@)(@@) % لوتلففت في كساء الكسائي % % وتلبست فروة الفراء % % 2(@)(@@) % وتخللت بالخليلوأضحى % % سيبويه لديك رهن سباء % % 3(@)(@@) % وتكونت من سواد أبي الأس % % ود شخصا يكنى أبا السوداء % % 4(@)(@@) % لأبى الله أن يعدك أهل ال % % علم إلا من جملة الأغبياء % % PageV01P259 البحر : - 1(@)(@@) % رأيتك لاتلذ لطعم شيء % % تطعمه سوى طعم العطاء 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms60# % % 2(@)(@@) % وما أهدى إليك من امتياحي % % أحب إليك من حسن الثناء % % 3(@)(@@) % فما لي عند تحكيكي مديحي % % أجشم خاطري ثقل العناء % % 4(@)(@@) % ولكني ألقي العرف عرفا % % وإن كنت الغني عن الجزاء % % 5(@)(@@) % أتيتك لم أشفع إليك بشافع % % ولو شئت كان الناس لي شفعاء % % 6(@)(@@) % ولكنني وفرت حمدي بأسره % % عليكولم أشرك بك الشركاء % % 7(@)(@@) % نداك معين كالذي قد علمته % % ولو كان غورا لا لتمست رشاء % 8(@)(@@) % وهذا شتاء قد أظل رواقه % % وجارك جار لا يخاف شتاء % % PageV01P260 البحر : - 1(@)(@@) % أيا رب لو سويت بيني وبينه % % لما كان عدلا أن نكون سواء % % 2(@)(@@) % فكيف وقد أعليته وخفضتني % % فكنت له أرضاوكان سماء % % PageV01P261 البحر : - 1(@)(@@) % وإذاماتحليت الأرض بالنر % % جس باهت به نجوم السماء % PageV01P262 البحر : - 1(@)(@@) % أيا فضلا غدا فضلا % % عن الخلقوفي الزمنى % % 2(@)(@@) % أما والعرج المحض ال % % ذي أنت به تكنى % % 3(@)(@@) % لئن صغر ما تدعى % % به ما كبر المعنى % % 4(@)(@@) % بلونا منك كوفيا % لئيم الأصل والمجنى % % 5(@)(@@) % وأهل الكوفة الرذل % % ة أدنى الأرذل الأدنى % % 6(@)(@@) % أناس كلهم فرد % % وسوآتهم مثنى % % 7(@)(@@) % فلا دانيهم يجنى % % ولا نائيهم يدنى % % 8(@)(@@) % فأضلاع بني الدنيا % % على بغضهم تحنى % % 9(@)(@@) % مجاهيلمعازيل % % إلى اليسرى عن اليمنى % % 10(@)(@@) % مخاذيلمماييل % % إلى السوأى عن الحسنى % % PageV01P263 11(@)(@@) % على غير تقى الله % % غدت أبياتهم تبنى % % 12(@)(@@) % ويقري ضيفهم فيها % % ملاطا بعده مزنى % % 13(@)(@@) % فسمناهم كعجافهم % % وأنى لهم السمنى % % 14(@)(@@) % محل الشيمة الهجنى % % وأهل اللغة اللكنى % % 15(@)(@@) % إذا قلنا لهم نحن % % فمن قولهم نحنى % % 16(@)(@@) % وكم من مورق فيهم % % لآل الله ما أجنى % % 17(@)(@@) % وكم من ناصر فيهم % % لآل الله ما أغنى % % 18(@)(@@) % وكم من خاذل فيهم % % لآل الله قد أخنى % % 19(@)(@@) % تأملناهم قدما % % بعين لم تكن وسنى % % 20(@)(@@) % فلم يقصر لهم قرن % % ولا طال لهم مبنى % % PageV01P264 21(@)(@@) % إذا عدت مخازيهم % % فما تحصى ولاتفنى % % 22(@)(@@) % فلا عافاهم الله % % ولا أغنى ولا أقنى % % 23(@)(@@) % يد الله على المسك % ن والساكن والسكنى % % 24(@)(@@) % وكل فله هم % من السوء به يعنى % % 25(@)(@@) % وهم الأعرج الوغد % % مني في استه يمنى % % 26(@)(@@) % صحيح علوه جلد % % عليل سفله مضنى % % 27(@)(@@) % إذا ما فيشة لاحت % % صبا قيس إلى لبنى % % PageV01P265 البحر : - 1(@)(@@) % أياغرة العلياوياعينها اليمنى % % وياصفوة الدنياوياحاصل المعنى % % 2(@)(@@) % أأحييتني بالأمس ثم تميتني % % برفضي وإقصائي وحقي أن أدنى % % 3(@)(@@) % ولو أنني أحييت ميتا عشقته 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms61# % % لحسن الذي أثرت فيه من الحسنى % % 4(@)(@@) % ألايعشق المفضال ميتا أعاشه % % وأجناه من معروفه الحلو ما أجنى % % 5(@)(@@) % أقول لقوم أوعدوا منك نبوة % وما خلتني أبلى بذاك ولاأمنى % % 6(@)(@@) % أأبقى على عهدي وينكث قاسم % % وتفنى أياديهوشكري لا يفنى % % 7(@)(@@) % كذبتمومعطيه العلاإن عزمه % % على العدل والإحسان للعزم لا يثنى % % 8(@)(@@) % أقاسملو نوفيك ماأنت أهله % % لأصبحت لاتسمى لدينا ولاتكنى % % 9(@)(@@) % ولم تدع إلاماجدا وابن ماجد % % وحق لك الأسنى من الوصف فالأسنى % % 10(@)(@@) % وإن كنت مأمولا تناسى حفاظه % % نصيبي وقد أغنى سواي وقد أقنى % % PageV01P266 11(@)(@@) % وأبعدني إبعاد جاني عظيمة % وقد كنت أستدعى زمانا وأستدنى % % 12(@)(@@) % أيحجب عني عشرة قد ومقتها % % فشوقي إليها شوق قيس إلى لبنى % % 13(@)(@@) % نعم أنا ممنوع الذي لست كفؤه % % أتمنعني قوتي من العرض الأدنى % % 14(@)(@@) % نشدتكم أن تظلموني وتسكنوا % % جوى الحقد أضلاعا على حبكم تحنى % % 15(@)(@@) % أذو آلة فاستخدموني لآلتي % % بقوتيأولا فارزقوني مع الزمنى % % 16(@)(@@) % وإني لأرجو الفوزتينولم تزل % % أياديكم تترى على المجتدى مثنى % % 17(@)(@@) % فلا برحت سبابة تستغيثكم % % ولا خنصر من شاكر بكم تثنى % % 18(@)(@@) % ولازلتم يأوي إلى حجراتكم % % أخو حادث أنحى وذو زمن أخنى % % 19(@)(@@) % ألا يا عباد الله ما بال حالة % % أعالجها تدوى بأدوية المضنى % % 20(@)(@@) % أأشقى بمن لو قلتياخير من مشى % % على الأرضمااستثنى ضميري مستثنى % % PageV01P267 21(@)(@@) % أعيذكم من جور من جار حكمه % % فطائفة أشكى وطائفة أغنى % % 22(@)(@@) % هبوني امرأ لاحظ فيه لمجتن % أما في اصطناع العرف مكرمة تبنى % % 23(@)(@@) % عفاء على الدنيا إذا ساء رأيكم % % فما هي بالدار الدميثة للسكنى % % PageV01P268 البحر : - 1(@)(@@) % فما قلوص تبيت الليل معملة % تضحى وراكبها لم يعد ممساها % % 2(@)(@@) % مما إذا راكب أنضى مطيته % % أضحت جموما وقد أنضاه مسراها % % PageV01P269 البحر : - 1(@)(@@) % كل امرىء مدح امرأ لنواله % % فأطال فيه فقد أراد هجاءه % 2(@)(@@) % لو لم يقدر فيه بعد المستقى % % عند الورود لما أطال رشاءه % 3(@)(@@) % غيري فإني لاأطيل مدائحي % % إلا لأوفي من مدحت ثناءه % 4(@)(@@) % وأعد ظلما أن أقل مديحه % % عمداوأسخط أن أقل عطاءه % PageV01P270 البحر : - 1(@)(@@) % لاتحسب المعروف لامعنى له % % إلا نوافل حمده وثناه % % 2(@)(@@) % فلقد ترى المعروف يحسن عند من % % لم يصطنعهوحمده لسواه % % PageV01P271 البحر : - 1(@)(@@) % مزجت خمرة عينيها بريقتها % % كيما تكفكف عني من حمياها % % 2(@)(@@) % فاشتد إسكارها إياي إذ مزجت % ومزجك 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms62# الكأس ينفي عنك طغياها % % PageV01P272 البحر : - 1(@)(@@) % أبو الحسين معجب برائه % لايقبل الشورى من أصدقائه % % 2(@)(@@) % فلعنة الله على إخائه % % وأدخل الأجرد في وجعائه % % 3(@)(@@) % وهما يمتعان وقتا من الده % % ر ويفنيهما وشيك المضاء % % 3(@)(@@) % صرحت عن طوية الأصدقاء % واضحات التجريب والابتلاء % 3(@)(@@) % وأبى المخض أن يكشف إلا % % عن صريح مهذب أو غثاء % 3(@)(@@) % ليس للمضمر الدخيل من الصا % % حب غير التكشيف والجتلاء % 3(@)(@@) % ولهذا اكتفى البليغ من الإس % % هاب فيما يريد بالإيحاء % % 3(@)(@@) % يفجأ من لامسه حتفه % بل حتفه أوحى من الفجء % 3(@)(@@) % وكذا لست تعرف الشيء إلا % % بعد فحص من أمره وابتلاء % % 3(@)(@@) % وخبيء الفؤاد يعلمه العا % % قل قبل السماع بالإيماء % PageV01P273 3(@)(@@) % فالصديق المأمون للزمن الفا % % دح والمرتجى لدى البرحاء % % 3(@)(@@) % والذي أنت وهو في جوهر النف % س جميعا من تربة وهواء % % 3(@)(@@) % وكماء مزجته بمدام % % فاستقرا تجنسا في وعاء % % 3(@)(@@) % لم يكن فيهما من الفضل إلا % % فاصلات الألقاب والأسماء % % 3(@)(@@) % ثم شيء عرفته بالتجاري % % ب وأخلصته بكشف الغطاء % % 3(@)(@@) % وإذا كنت لا تؤثل إلا % % درهما جائزا على البصراء % % 3(@)(@@) % قمرته الفرخ على ضغائه % % بما يفي وكعت عن دوائه % % 3(@)(@@) % وظنون الذكي أنفذ في الحق % ق سهاما من رؤية الأغبياء % % 3(@)(@@) % ومن تعديه ومن إلوائه % % بالحق إذ جار على أعدائه % % 3(@)(@@) % السريع سكيننا هذا له حدة % تصلح للتقطيع والوجء % PageV01P274 3(@)(@@) % إن البخيل ميت بدائه % % وأمره كل إلى ورائه % % 3(@)(@@) % لكنني أفرط في اقتضائه % % وأستخير الله في أقصائه % % 3(@)(@@) % زلقت رجل شنطف في خراها % % فاستغاثت بصفعة في قفاها % % 3(@)(@@) % ثلطت في ندينا فاستحقت % % أن يكافى بصفعة أخدعاها % % 3(@)(@@) % سقطة ملطة شروخ ربوخ % شنطف صدق الذي سماها % % 3(@)(@@) % عذرنا النخل في إبداء شوك % يذود به الأنامل عن جناه % 3(@)(@@) % يسبح في الجهلوفي طخيائه % % وهو لدى الإخوان من جفائه % % 3(@)(@@) % فما للعوسج الملعون أبدى % % لنا شوكا بلا ثمر نراه % 3(@)(@@) % تراه ظن فيه جنى كريما % فأظهر عدة تحمي حماه % % 3(@)(@@) % فلا يتسلحن لدفع كف % كفاه لؤم مجناه كفاه % % PageV01P275 3(@)(@@) % قحبة كلبة نخور صبور % حين تلقى طعن الأيور كلاها % % 4(@)(@@) % بوأخلصته بكشف الغطاء % % إنما تبرز الجواهر مافي % % 5(@)(@@) % ها إذا ما أمعتها بالصلاء % % لايغرنك المماذق بالظا % % 6(@)(@@) % هر في حال مدة الالتقاء % % من كلام يوشى بمدح جميل 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms63# % 7(@)(@@) % وحديث كالقهوة الصهباء % % ويمين كعطك البرد لاتن % % 8(@)(@@) % ظر في سقمها وفي الإبراء % % عبد عين فإن تغيبت عنه % % 9(@)(@@) % أكل اللحموارتعى في الدماء % % وإذا ما أردته لقتيل % % 10(@)(@@) % لحق الود منه بالعنقاء % % ولقد قال سيد من أولي الفض % % 11(@)(@@) % ل ومن سر صفوة الأصفياء % % ليس أهل العراق لي بصاحب % % 12(@)(@@) % إن هم جانبوا طريق الوفاء % % إنما صاحبي المشارك في القل % PageV01P276 13(@)(@@) % ل وذو البذل والندى والحياء % % إنما الصاحب الذي يحفظ الصا % % 14(@)(@@) % حب في كل شدة ورخاء % % لايلهيه عنه خفضولا ين % % 15(@)(@@) % ساه عند المربدة الشوهاء % % ماله كنزه إذا خفت الغي % % 16(@)(@@) % ثوضاقت خلائق السمحاء % % وانتفى الشيخ من بنيهولم تع % % 17(@)(@@) % طف على بكرها أعف النساء % % حكمة ما ورثتها عن حكيم % 18(@)(@@) % فيلسوف من عترة الأنبياء % % ليس شيء يفيده المرء في الده % % 19(@)(@@) % ر على حين فقره والثراء % % هو خير من صاحب ورفيق % % 20(@)(@@) % مسعد في الجلية البهماء % % ليس بين الصديق والنفس فرق % % 21(@)(@@) % عندتحصيل قسمة الأشياء % % يا سمي الوصيياشق نفسي % % 22(@)(@@) % وأخي في الململة النكراء % % ياأخا حل في المكارم والسؤ % % PageV01P277 23(@)(@@) % دد على محل أهل السناء % % لم يقصر به اعتيادولم يق % % 24(@)(@@) % عد به مولد عن استعلاء % % وله بعد من مآثره الزه % % 25(@)(@@) % ر خلال تربى على الحصباء % % عجم الدهر خلفتين وسوى % % 26(@)(@@) % بين حالي رخائه والبلاء % % كرم الخيم والنجاروتيكم % 27(@)(@@) % شيمة شارف من النبلاء % % وبيان كأنه خرز النا % % 28(@)(@@) % ظم في جيد طفلة غيداء % % وطباع أرق من ظبة السي % % 29(@)(@@) % فوأمضى من ريقة الرقشاء % % تتراءى له العيون فتلقا % % 30(@)(@@) % ه نقابا بدائها والدواء % % فيصل للأموريأتي المعالي % % 31(@)(@@) % بارتقاء فيهاوحسن اهتداء % % وغريم أمضى من الأجل الحت % % 32(@)(@@) % معصيم بأربة بزلاء % % وهو إلف الحجاوترب المساعي % % PageV01P278 33(@)(@@) % وعقيد الندى وحلف البهاء % % وهو بعل للمكرماتفما ين % % 34(@)(@@) % فك بين العوان والعذراء % % حافظ للصديق إن زلت النع % % 35(@)(@@) % ل به أو هوى عن العلياء % % وجواد عليه بالمال والنف % % 36(@)(@@) % س وبذل العقيلة الوفراء % % لايؤاتي على اقتسارولا ين % % 37(@)(@@) % هض إلا بالعزة القعساء % % غير أن الزمان أقصدني في % % 38(@)(@@) % ه بسهمي تفرق وانتئاء % % لاأراه إلا على شحط الدا % % 39(@)(@@) % روإما عن مدة شقاء % % فإذا ما رأيته فكأني % % 40(@)(@@) % بين أثناء روضة مرجاء % % يتجلى عن ناظري عشا الجه 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms64# % % 41(@)(@@) % ل بألفاظه العذاب الطراء % % وأحاديث لو دعوت بها الأع % % 42(@)(@@) % صم لبى من حسن ذاك الدعاء % % طبت خلا فاسلم على نكد الده % % PageV01P279 43(@)(@@) % روعش آمنا من الأسواء % % لا رزئناك عاتبا طلب العت % % 44(@)(@@) % بى بإعفا معاتب الأدباء % % بكلام لو أن للدهر سمعا % % 45(@)(@@) % مال من حسنة إلى الإصغاء % % ولو أن البحار يقذف فيها % % 46(@)(@@) % منه حرف ماأج طعم الماء % % وهو أمضى من السيوف إذا هز % % 47(@)(@@) % زتوأوحى من مبرمات القضاء % % وهو يشفي الصدور من جنف الحق % % 48(@)(@@) % دويغضي من مقلة زرقاء % % يكتسي منشدوه منه رداء % % 49(@)(@@) % ذا الجمالأكرم به من رداء % % لاتعايى به الرواة ولم يس % % 50(@)(@@) % لمه مسموعه إلى استثناء % % ليس بالمعمل الهجين ولا الوح % % 51(@)(@@) % شي ذي العنجهية العثواء % % بل هو البارد الزلال إذا وا % % 52(@)(@@) % فق من صائم حلول عشاء % % تخلق الأرض وهو غض جديد % % PageV01P280 53(@)(@@) % فلكي من عنصر الجوزاء % % عتب إلف أرق من كلم ال % % 54(@)(@@) % أم وإن كان من ذري خلقاء % % إن يكن عن من أخيك فعال % 55(@)(@@) % جار فيه عن مذهب الأوفياء % % جل في مثله العتاب وعالى % % 56(@)(@@) % أن يوازى بزلة العلماء % % فبحق أقولعمرك الل % 57(@)(@@) % ه طويلا في رفعة وعلاء % % ولك القول لالناولك التس % 58(@)(@@) % ليم منا لمذهب الحكماء % % إن خيرا من التقصي على الخل % 59(@)(@@) % ل سماح في الأخذ والإعطاء % % واغتفار لهفوة إن ألمت % % 60(@)(@@) % واطراح التفسير والانتفاء % % ليس في كل زلة يسع العذ % 61(@)(@@) % ر وفي ضيقه انتكاس الإخاء % % مارأيت المراء يوجب إلا % % 62(@)(@@) % فرقة ما اعتمدت طول المراء % % وعروس قد جهزت بطلاق % PageV01P281 63(@)(@@) % عاتبت في وليدة شنئاء % إن طول العتاب يزدرع البغ % % 64(@)(@@) % ضاء في قلب كاره البغضاء % لم أقل ذا لأن عتبت ولكن % % 65(@)(@@) % شجر العتب مثم ر للجفاء % % ليس كل الإخوان يجمع ماير % 66(@)(@@) % ضيك من كل خلة حسناء % % فيه ما في الرجال من خلة تح % 67(@)(@@) % مد يوما وخلة سوآء % % أي خل تراه كالذهب الأح % % 68(@)(@@) % مر أو كالوذيلة الزهراء % % أين من يحفظ الصديق بظهر ال % % 69(@)(@@) % غيب من سوء قرفة الأعداء % % فات هذا فلن تراه يد الده % % 70(@)(@@) % ر فأنعم في إثره بالبكاء % مثلا ماضربته لك فاسمع % % 71(@)(@@) % وتثبتجزيت خير الجزاء % % كل شيء بالحس يعرف أو 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms65# بالس % 72(@)(@@) % سمع أو بالأدلة الفصحاء % % فله موضعوفيه طباخ % PageV01P282 73(@)(@@) % لبلاغ ذي مدة وانقضاء % % ولكل من الأخلاء حال % 74(@)(@@) % هو فيها كفء من الأكفاء % أي شيء أجل قدرا من السي % % 75(@)(@@) % ف ليوم الكريهة العزاء % % فأبن لي هل يصلح السيف في العز % 76(@)(@@) % زاء إلا للضربة الرعلاء % % والوشيج الخطي وهو رشاء ال % % 77(@)(@@) % موت يوم الزلزال والبأساء % % هل تراه يراد في حومة المأ % % 78(@)(@@) % قط إلا للطعنة النجلاء % % فكذاك الصديق يصلح للسا % % 79(@)(@@) % عة دون الإصباح والإمساء % % فتمسك بهولا تدعنه % % 80(@)(@@) % فتراه خصما من الخصماء % % وهما يذخران للحال لا الإح % 81(@)(@@) % وال بين الفؤاد والأحشاء % % وصغار الأمور ردف لذي الرت % % 82(@)(@@) % بة منها والفخروالكبرياء % % وملوك الأنام قد أحوج الل % PageV01P283 83(@)(@@) % ه عرا ملكها إلى الدهماء % % ولو أن الملوك أفرادها الل % 84(@)(@@) % ه من التابعين والوزعاء % % لبدت خلة وثلت عروش % % 85(@)(@@) % واستوت بالأخسة الوضعاء % ولما كان بين أكمل خلق ال % % 86(@)(@@) % له فرق وبين أهل الغباء % % حلق الدرع ليس يمسك منها % % 87(@)(@@) % سردها غير شكة الحرباء % ولهذا الإنسان قد سخر الرح % % 88(@)(@@) % من ما بين أرضه والسماء % وبحسب النعماء يطلب الشك % % 89(@)(@@) % ر كفاء لواهب النعماء % % ثم لم يخله من النقص والحا % % 90(@)(@@) % جة والعجز قسمة بالسواء % % ليكون الإنسان في غاية التع % 91(@)(@@) % ديل بين السراء والضراء % % فاصطبر للصديق إن زل أوجا % % 92(@)(@@) % ر برجل عن الهدى نكباء % % فهو كالماءهل رأيت معين ال % % PageV01P284 93(@)(@@) % ماء يعفى من نطفة كدراء % وتمتع بهففيه متاع % 94(@)(@@) % وادخار لساعة سوعاء % % أي جسم يبقى على غير الده % % 95(@)(@@) % ر خليا من قاتل الأدواء % % أيما روضة رأيت يد الأي % % 96(@)(@@) % أم في عبقرية خضراء % % أو ما أبصرت لك الخير عينا % % 97(@)(@@) % ك رباها مصفرة الأرجاء % % إنما هذه الحياة غرور % 98(@)(@@) % وشقاء للمعشر الأشقياء % % نحن فيها ركب نؤم بلادا % 99(@)(@@) % فكأن قد ألنا إلى الانتهاء % % ماعسى نرتجي ونحن مع الأم % 100(@)(@@) % وات يحدى بنا أحث الحداء % فإذا أعرض الصديق وولى % % 101(@)(@@) % لقفار لاتهتدى فيفاء % ورمى بالإخاء من رأس عليا % % 102(@)(@@) % ء إلى مدلهمة ظلماء % % لم يراقب إلاولم يرج أن يأ % % PageV01P285 103(@)(@@) % تي يوما يمشي على استحياء % % فاتركنه لا يهتدي لمبيت % 104(@)(@@) % بنباح ولا بطول عواء % % إنما ترتجى البقية ممن % % 105(@)(@@) % فيه بقيا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms66# وموضع للبقاء % % واشددن راحتيك بالصاحب المس % % 106(@)(@@) % عد يوم البليسة الغماء % بالذي إن دعي أجاب وإن كا % % 107(@)(@@) % ن قراع الفوارس الشجعاء % % كأبي القاسم الذي كل مايم % 108(@)(@@) % لك للمعتقين والخلطاء % % والذي إذا أردته لمقام % 109(@)(@@) % جاء سبقا كاللقوة الشغواء % % وإذا ما أردته لجدال % 110(@)(@@) % جاء كالمصمئلة الدهياء % % فإذا دل جاء بالحج % 111(@)(@@) % جة الغراء ذات المعالم الغراء % % منجح القيل ما علمت وحاشا % % 112(@)(@@) % لخليلي من ترحة الإكداء % % أريحي بمثله يبتنى المج % % PageV01P286 113(@)(@@) % د وتسمو به فروع البناء % % باسط الوجهضاحك السنبسا % % 114(@)(@@) % م على حين كرهه والرضاء % % وثبيت المقام في الموقف الدح % % 115(@)(@@) % ض إذا ما أضاق رحب الفضاء % % وله فكرة يعيد بها الأم % % 116(@)(@@) % وات في مثل صورة الأحياء % % فتراها تفرى الفريوكانت % % 117(@)(@@) % قبله لاتحير رجع النداء % % ليس يرضى لها التحرك أو يب % % 118(@)(@@) % رزها في زلازل الهيجاء % % فترى بينها مقارعة الأب % % 119(@)(@@) % طال راحت من غارة شعواء % % بتدابير تفلق الحجر الصل % 120(@)(@@) % دوتشفي من كل داء عياء % % يهزم الجيش ذكره فتراهم % % 121(@)(@@) % جزر الهام عرضة الأصداء % % يتلقاهم بسيف من الفك % % 122(@)(@@) % رورمح من صنعة الآراء % % وسيوف العقول أمضى من الصم % % PageV01P287 123(@)(@@) % صام في كف فارس الغبراء % % فترى القوم في قليب من المو % % 124(@)(@@) % ت أسارى لدلوه والرشاء % وله حرشف يدير قداما % % 125(@)(@@) % ه زحافا كالفيلق الشهباء % والمغاوير باليات كما عا % % 126(@)(@@) % ينت مور الكتيبة الجأواء % % وهي خرس البيان من جهة النط % % 127(@)(@@) % قفصاح الآثار والأنباء % % أي شيء يكون أحسن منه % % 128(@)(@@) % فارسا ماشيا على العفراء % في حروب لاتصطلى لترات % 129(@)(@@) % وقتال بغير ما شحناء % وقتيل بغير جرم جناه % % 130(@)(@@) % وجريح مسلم الأعضاء % % وصريع تحت السنابك ينجو % % 131(@)(@@) % برماق ولات حين نجاء % % وهو في ذاك ناعم البال لا ي % % 132(@)(@@) % فصل بين القتيل والأسراء % % وتراه يحث كأس طلاء % PageV01P288 133(@)(@@) % باقتراح لقبلة أو غناء % % لايدانيه في الشجاعة بسطا % % 134(@)(@@) % م بن قيسوفارس الضحياء % % حل من خلتي محل زلال ال % % 135(@)(@@) % ماء من ذات غلة صدياء % % بوداد كأنه النرجس الغض % 136(@)(@@) % ض عليلا بمسكة ذفراء % % راسيا ثابتا وإن خلت الدا % % 137(@)(@@) % ر جنابا وامتد عهد اللقاء % % لست أخشى منه الغياب ولا تخ % % 138(@)(@@) % شاه في حال قربنا والعداء % % حبذا أنتما خليلا صفاء % 139(@)(@@) % لا يدانيكما 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms67# خليلا صفاء % لكما طوع خلتي وقيادي % % 140(@)(@@) % ما تغنت خطباء في شجراء % ذاك جهدي إذا وددت وإن أق % % 141(@)(@@) % در أكافئكما بخير كفاء % % وحباء الوداد بالمنطق الغض % 142(@)(@@) % ض يجازى به أجل حباء % % ن % PageV01P289 البحر : - 1(@)(@@) % ألا ابلغ لديك بني طاهر % أساة الخلافة من دائها % % 2(@)(@@) % علوتم علو نجوم السماء % % فنوؤوا علينا كأنوائها % % PageV01P290 البحر : - 1(@)(@@) % لا عدمت السرور يا بن أبي بك % ر وأعقبت صحة من دوائك % 2(@)(@@) % وأطال الإله عمرك في عز % ز يسوء الجميع من أعدائك % % 3(@)(@@) % عالي القدر نافذ الأمر والنه % % ي تسر الجميع من أوليائك % % 4(@)(@@) % رمت إذ قيل لي أخذت دواء % لطفا عاليا بقدر اعتلائك % % 5(@)(@@) % فإذا ما ملكته مستقل % لك لا بل لخادم بفنائك % % 6(@)(@@) % وإذا الشكر والثناء هما أف % % ضل شيء يهدى إلى نظرائك % % 7(@)(@@) % فبعث الدعاء والشكر فاعرف % فضل علقين أخبرا عن علائك % % PageV01P291 البحر : - 1(@)(@@) % يا باذل العرف لأعدائه % % مذ كان فضلا عن أودائه % 2(@)(@@) % ويا أخا الجود وخلصانه % لكل ما يشفيه من دائه % 3(@)(@@) % جاء البنفس الرطب فامنن به % % ما دام مطلولا بأندائه % 4(@)(@@) % قد جادت الأرض بإنباته % فجد لنا أنت بإهدائه % 5(@)(@@) % ولا تكن أبخل من طينة % تبديه في إبان إبدائه % % 6(@)(@@) % ما الأرض أولى من فتى ماجد % % بفعل معروف وإسدائه % % 7(@)(@@) % والحر لا يقطع في حالة % % عادات جدواه وإجدائه % % 8(@)(@@) % ولا أياديه بمقفوة % بيضاؤه منه بسودائه % % 9(@)(@@) % ولا عطاياه بمتلوة % منها الهنيئات بنكدائه % % 10(@)(@@) % ما حق من أسلف تأميله % مثلك أن يجزى بإكدائه % % PageV01P292 البحر : - 1(@)(@@) % طويت بسيط آمالي برفد % كفاني أن أؤمل ما سواه % 2(@)(@@) % أقول وقد طويت به رجائي % % ليطو كذا رجائي من طواه % PageV01P293 البحر : - 1(@)(@@) % سقيتن يا منزلات الهوى % % بوادي الشريجة صوب الحيا % % 2(@)(@@) % ولا زال مسرح غزلانكن % مريع المحلة والمنتأى % % 3(@)(@@) % وجاورت الروض حيث الحسا % % ن تغض النهى من عيون المها % % 4(@)(@@) % مواقف حور بنات الخدور % يبكين أعين من قد هوى % % 5(@)(@@) % بكاء الحمائم في أيكة % تجاوبن وقت ابتسام الضحا % % 6(@)(@@) % إذا ما غدون لطاف الخصور % خفاف الصدور ثقال الخطا % % 7(@)(@@) % رقاق الثنايا عذاب الغروب % صغار القلوب ضعاف القوى % % 8(@)(@@) % زوائر في كل ما جمعة % قبورا أقمن بدار البلى % % 9(@)(@@) % ورحن يجاذبن أردافهن % لواعب في نسوة كالدمى % % 10(@)(@@) % كأن تثني 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms68# أعطافهن % تثني الغصون بريح الصبا % % PageV01P294 11(@)(@@) % فكم لي في ظل أفنانكن % على النأي من معهد للصبا % % 12(@)(@@) % وبعد التهاجر من وصلة % وبعد التفرق من ملتقى % % 13(@)(@@) % ومن يوم هم نعمنا به % % بأحبابنا صالح مرتضى % % 14(@)(@@) % فبدلت منكن في واسط % مساكن أنباط أهل القرى % % 15(@)(@@) % ومن سر من را وروضاتها % % حشوشا تقابل وسط الملا % % 16(@)(@@) % ومن حسن أوجه سكانها % % قرودا تزحر تحت الغضى % % 17(@)(@@) % رجالا بكسكر ما إن ترى % % لهم شبها من جميع الورى % % 18(@)(@@) % نحاف الجسوم خفاف الحلو % % م صغار الرؤوس عظام اللحى % % 19(@)(@@) % فلا قدست واسط بلدة % ولا جادها من سحاب روا % % PageV01P295 البحر : - 1(@)(@@) % نشر آذار في الثرى حللا % قد كان كانون قبل طواها % % 2(@)(@@) % كسا عراء الربا طيالسة % خضرا وبالعبقري رداها % % 3(@)(@@) % وصاغ للأرض كل تاج بها % % أحسن في صنعه فجلاها % % 4(@)(@@) % أعجب ذاك السماء فانبعثت % تنثر درا على محياها % % 5(@)(@@) % ولو ترانا وقد تكنفنا % % من دكن الخز لابس جاها % % 6(@)(@@) % وتظهر الشمس في النشاص لنا % % من خلل الغيم إذ تغشاها % % 7(@)(@@) % مثل عروس تسترت خجلا % من بعلها بعد أن تجلاها % % PageV01P296 البحر : - 1(@)(@@) % سلوت شبابي والرضاع كليهما % % فكيف تراني ساليا ما سواهما % % 2(@)(@@) % وما أحدث العصران شيئا نكرته % % هما الواهبان السالبان هما هما % % 3(@)(@@) % رأيت احتساب الأمر قبل وقوعه % % حمى مقلتي أن يطول بكاهما % % PageV01P297 البحر : - 1(@)(@@) % يا أبا الفضل لم تكن عوجة من % % ك علينا تحط من عليائك % 2(@)(@@) % لا ولا في قضاء حق أبي شي % بة ما يوجب انتكاث إخائك % 3(@)(@@) % قد بغينا كما بغيت وقد كا % % ن حقيقا وفاؤنا بوفائك % 4(@)(@@) % إن تكن قد علوت عن ساكني الأر % % ض فخاطبهم إذا من سمائك % PageV01P298 البحر : - 1(@)(@@) % إن ابن بلبل نخلة % لانت لصقر من وراء % 2(@)(@@) % ذاك الذي نسخ الإجا % % رة بالوزارة للقضاء % 3(@)(@@) % ملك الرجال بعزة % ملك الرجال الأقوياء % 4(@)(@@) % ولطال ما ملك الرجا % % ل بذلة مثل النساء % 5(@)(@@) % أضحت سعادته له % % رهنا مليا بالشقاء % 6(@)(@@) % عبد الندى ملك الحجا % % ب تراه جبار اللقاء % 7(@)(@@) % يهوى سفالا في الحضي % % ض وأنفه فوق السماء % % PageV01P299 البحر : - 1(@)(@@) % أسل الغنى عنك الذي % % أغناك عني بالثراء % 2(@)(@@) % كيما تراني في الذي % % أبصرت فيك من القضاء % 3(@)(@@) % ولقد أرقت بلا انتفا % % ع ماء وجهي بالرجاء 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms69# % 4(@)(@@) % فمنعتني منك الجدا % % وسرقتني طيب الثناء % PageV01P300 البحر : - 1(@)(@@) % قولا لسمانة كهف الزنا % % سبحان من وسع أحشاك % 2(@)(@@) % يغيب ماء الناس عن أسرهم % % فيك ولا تبسط أثناك % 3(@)(@@) % يا أرض هل حملت في وسعها % % بالله مذ حملت أعباك % % 4(@)(@@) % كأنما يوحى إلى رحمها % % وقيل يا أرض ابلعي ماك % PageV01P301 البحر : - 1(@)(@@) % لو أن رجلي عرسه يداها % % ما أخطأته رحمة تغشاها % % 2(@)(@@) % مذ خلقت مرفوعة رجلاها % % كأنما تستغفران اللاها % % 3(@)(@@) % يلومه الناس أن اصطفاها % % مع الذي يخبر من زناها % % 4(@)(@@) % وخالد يدري لم اجتباها % % من كان يشفي داءه لولاها % % 5(@)(@@) % يمنعها الشيخ من اشتهاها % % أو يحبس الأصلع في دباها % % PageV01P302 البحر : - 1(@)(@@) % قالوا سقى الماء بطن وهب % فقلت أنى وكيف ذاكا % % 2(@)(@@) % أين هواضيمه اللواتي % % كان يداوي بها براكا % % 3(@)(@@) % لم نر يا وهب ذا بغاء % مستسقيا بطنه سواكا % % 4(@)(@@) % إن يك لم يغن عنك شيئا % وقع الهواضيم في حشاكا % % 5(@)(@@) % لقد سقي الماء بطن سوء % شفاه ربي ولا شفاك % % PageV01P303 البحر : - 1(@)(@@) % ومغن ببرده ونداه % تخمد النار حين يفتح فاه % 2(@)(@@) % يتغنى بغير رزء ولا يس % % كت إلا بحكمه ورضاه % 3(@)(@@) % يتمنى السميع حين يغني % % أنه قبل ذاك صم صداه % PageV01P304 البحر : - 1(@)(@@) % ألا رب أشياء مذكورة % يحدث عنها وليست ترى % % 2(@)(@@) % بعرس وآوى وما أشبها % % وكابن الرخامي طيف الكرى % % PageV01P305 البحر : - 1(@)(@@) % وذي ود تغيظ إذ جفاني % % أبو حفص فقلت له فداه % 2(@)(@@) % ألم ترني وقفت عليه عرضي % % وأمكنني بذلك من قفاه % 3(@)(@@) % فلست الدهر هاجيه حياتي % % ولكني سأهجو من هجاه % 4(@)(@@) % إذا كافأته سوءا بسوء % فمن ليدي ونزهتها سواه % PageV01P306 البحر : - 1(@)(@@) % أبيتم أن تقيدوا شكر مثلي % % بل الله الذي خلق الإباء % 2(@)(@@) % رآني الله أرفع من جداكم % % وأنى تمطر الأرض السماء % PageV01P307 البحر : - 1(@)(@@) % لعمرك ما أدري إذا ما تنفست % كنزة ما أنفاسها من فسائها % % 2(@)(@@) % بها غلمة قد أحرقتها بحرها % % تبردها عن نفسها بغنائها % % PageV01P308 البحر : - 1(@)(@@) % رأيت أذاكم وإن اعتزلتم % % جنوبا تستدير على ذراها % % 2(@)(@@) % فأما لؤمكم عن كل خير % فعين الفهد لا تقضي كراها % % PageV01P309 البحر : - 1(@)(@@) % لعمرك ما الدنيا بدار إقامة % إذا زال عن عين البصير غطاؤها % % 2(@)(@@) % وكيف بقاء الناس فيها وإنما % % ينال بأسباب الفناء بقاؤها % % PageV01P310 البحر : - 1(@)(@@) % وما الفقر عيبا ما تجمل أهله 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms70# % ولم يسألوا إلا مداواة دائه % 2(@)(@@) % ولا عيب إلا عيب من يملك الغنى % % ويمنع أهل الفقر فضل ثرائه % 3(@)(@@) % عجبت لعيب العائبين فقيرهم % % بأمر قضاه ربه من سمائه % % 4(@)(@@) % وتركهم عيب الغني ببخله % % ولؤم مساعيه وسوء بلائه % % 5(@)(@@) % وأعجب منه المادحون أخا الغنى % % وليس غناه فيهم بغنائه % 6(@)(@@) % ولو أنه أغنى ووكل نفسه % % بجمع فضول المال بعد اقتنائه % % 7(@)(@@) % لما كان أهل الحمد من قربائه % % إذا أتمروا رشدا ولا بعدائه % % 8(@)(@@) % ولا حمد الله الأولى يحمدونه % % ولا اعتدهم في الناس من أوليائه % % 9(@)(@@) % أولئك أتباع المطامع والمنى % % جزاهم مليك الناس شر جزائه % % 10(@)(@@) % يعيبهم أهل العفاف ومدحهم % حريصا يكد النفس بعد اكتفائه % % PageV01P311 11(@)(@@) % يؤثل لا للحمد ما هو كاسب % ولا الأجر في إصباحه ومسائه % % 12(@)(@@) % ولكن لكنز من لجين وعسجد % يود فناء العمر قبل فسائه % % 13(@)(@@) % يقيه ويحميه بصفحه وجهه % % ويجعل أيضا عرضه من فدائه % % 14(@)(@@) % ولو حظ أضحى ماله من أمامه % % وقاء وأضحى عرضه من ورائه % % 15(@)(@@) % ولكن أبى إلا الخسار لغيه % وما فوق عيني قلبه من غطائه % % 16(@)(@@) % ولو وزن استمتاعه بغنائه % إذا ما وفى استمتاعه بعنائه % % 17(@)(@@) % سأمنحه ذمي وأختص حزبه % بأوفى نصيب من قبيح ثنائه % % 18(@)(@@) % رضيت لمن يشقى عقابا شقاءه % % وإن لم أكن أرضى له بشفائه % % 19(@)(@@) % إذا حرم الفاني من الخير حظه % فلم يفرح الباقي بطول بقائه % % 20(@)(@@) % ضلالا لمن يسعى إلى غير غاية % ولايرتجى ناهيه عند انتهائه % % PageV01P312 البحر : - 1(@)(@@) % يا ويح هذا الطبيب ويحاه % لقد تعدى بما تجناه % 2(@)(@@) % يألم بالفصد كف ذي غنج % تفصد منا القلوب عيناه % PageV01P313 البحر : - 1(@)(@@) % قد تستر المرآة عن % ك خدوش وجهك مع صداها % % 2(@)(@@) % وكذاك نفسك لا تري % % ك عيوب نفسك مع هواها % % PageV01P314 البحر : - 1(@)(@@) % وحية في رأسها درة % تسبح في بحر قصير المدى % % 2(@)(@@) % فإن تولت فالعمى حاضر % وإن بدت بان طريق الهدى % % PageV01P315 البحر : - 1(@)(@@) % ما للملول وفاء في مودته % قلب الملول إلى هجر وإقصاء % 2(@)(@@) % كأنني كلما أصبحت أعتبه % أخط حرفا على صفح من الماء % PageV01P316 البحر : - 1(@)(@@) % به تنطوي الآمال عند انبساطها % % وتنسط الأعمار بعد انطوائها % % 2(@)(@@) % وما تنطوي الآمال عنه بخيبة % ولكن إلى جدواه أقصى انتهائها % % 3(@)(@@) % إذا غلت الآمال فارض بجوده % فما بعده 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms71# معدى لسهم غلائها % % PageV01P317 البحر : - 1(@)(@@) % وقهوة رقت عن الهواء % أدفع للداء من الدواء % % 2(@)(@@) % عذراء لاحت في يدي عذراء % أحسن من تظاهر النعماء % % PageV01P318 البحر : - 1(@)(@@) % قال لهاجيك مطنبا في الهجاء % % لا تبع راحة بطول عناء % 2(@)(@@) % سمني لا تزد فأنت إذا ما % % قلت أفعى أنبأت عن رقشاء % % 3(@)(@@) % قسما إن في الهجاء لسترا % % وغطاء للسوءة السوآء % % 4(@)(@@) % لو هجا الأنبياء كلبا لقال الن % ناس هذا تكذب الشعراء % % PageV01P319 البحر : - 1(@)(@@) % لله خالد الطائي من رجل % كم شبهة من عويص الفقه جلاها % % 2(@)(@@) % أبصرت زوجته يوما بحضرته % % وقد علت دون سقف البيت رجلاها % % 3(@)(@@) % فقلت هلا توارت عنك محسنة % فقال تخشى عقاب الله مولاها % % 4(@)(@@) % لو أنها كاتمتني بالزنا أثمت % إذ تتقيني بما لا تتقي اللاها % % PageV01P320 البحر : - 1(@)(@@) % وشاعر أوقد الطبع الذكاء به % % فكاد يحرقه من فرط إذكاء % 2(@)(@@) % أقام يجهد أياما قريحته % وفسر الماء بعد الجهد بالماء % PageV01P321 البحر : - 1(@)(@@) % وكلام لو ان للدهر سمعا % مال من حسنه إلى الإصغاء % 2(@)(@@) % ولو ان البحار يقذف فيها % % منه حرف ما أج طعم الماء % 3(@)(@@) % تخلق الأرض وهو غض جديد % فلكي من عنصر الجوزاء % PageV01P322 البحر : - 1(@)(@@) % رب عرض منزه عن قبيح % دنسته معرضات الهجاء % 2(@)(@@) % لو أراد الأديب أن يهجو البد % % ر رماه بالخطة الشنعاء % 3(@)(@@) % قال يا بدر أنت تغدر بالسا % % ري وتزري بزورة الحسناء % % 4(@)(@@) % كلف في شحوب وجهك يحكي % % نكتا فوق وجنة برصاء % % 5(@)(@@) % يعتريك المحاق ثم يخلي % % ك شبيه القلامة الحجناء % % 6(@)(@@) % ويليك النقصان في آخر الشه % % ر فيمحوك من أديم السماء % % 7(@)(@@) % فإذا البدر نيل بالهجو هل يأ % % من ذو الفضل ألسن الشعراء % % 8(@)(@@) % لا لأجل المديح بل خيفة الهج % % و أخذنا جوائز الخلفاء % % PageV01P323 البحر : - 1(@)(@@) % روح النفوس تنفس الصهباء % % من دونها كالصبح باللألاء % 2(@)(@@) % فكأنها من فوق عرش زجاجها % % بلقيس تجلى في حلى حسناء % % 3(@)(@@) % وكأنها في الكأس شمس قارنت % برج الهلال فهل بالأضواء % 4(@)(@@) % نظم الحباب على شقائق أرضها % % نثر اللآلىء من ندى الأنواء % % 5(@)(@@) % لم أدر هل أبدت حبابا زاهرا % أو عكس نور كواكب الجوزاء % % 6(@)(@@) % تسري كسري الروح في أعضائها % % أو كالصبا في الروضة الغناء % % 7(@)(@@) % وتعيد نشأتها المشيب إلى الصبا % % فكأن عيسى جاء بالإحياء 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms72# % % 8(@)(@@) % تروي عن العصر القديم حديثها % % بتسلسل والدور في الندماء % % PageV01P324 البحر : - 1(@)(@@) % لنعم اليوم يوم السبت حقا % لصيد إن أردت بلا امتراء % 2(@)(@@) % وفي الأحد البناء فإن فيه % % بدا الرحمن في خلق السماء % % 3(@)(@@) % وفي الاثنين إن سافرت فيه % % تنبأ بالنجاح وبالنجاء % % 4(@)(@@) % وإن رمت الحجامة فالثلاثا % % فذاك اليوم مهراق الدماء % % 5(@)(@@) % وإن رام امرؤ يوما دواء % فنعم اليوم يوم الأربعاء % % 6(@)(@@) % وفي يوم الخميس قضاء خير % ففيه الله يأذن بالقضاء % % 7(@)(@@) % ويوم الجعة التنعيم فيه % % وتزويج الرجال مع النساء % % PageV01P325 البحر : - 1(@)(@@) % طلابك للحظوظ من العناء % فدعها للسفاهة والجباء % 2(@)(@@) % وكد دنياك ما بقيت فيها % % بصافية أرق من الهواء % % 3(@)(@@) % ولا تتبع حميا الكأس نقلا % سوى أعراض أولاد الزناء % % PageV01P326 البحر : - 1(@)(@@) % يا ثوبه الأزرق الذي قد % % فاق العراقي في السناء % 2(@)(@@) % كأنه فيه بدر تم % يشق زرقة السماء % PageV01P327 البحر : - 1(@)(@@) % شاب رأسي ولات حين مشيب % وعجيب الزمان غير عجيب % 2(@)(@@) % فاجعلي موضع التعجب من شي % بي عجبا بفرعك الغربيب % 3(@)(@@) % قد يشيب الفتى وليس عجيبا % أن يرى النور في القضيب الرطيب % 4(@)(@@) % ساءها أن رأت حبيبا إليها % % ضاحك الرأس عن مفارق شيب % 5(@)(@@) % فدعته إلى الخضاب وقالت % % إن دفن المعيب غير معيب % 6(@)(@@) % خضبت رأسه فبات بتبري % % ح وأضحى فظل في تأنيب % 7(@)(@@) % ليس ينفك من ملامة زار % قائل بعد نظرتي مستريب % % 8(@)(@@) % ضلة ضلة لمن وعظته % غير الدهر وهو غير منيب % % 9(@)(@@) % يدري غرة الظباء مريغا % صيد وحشيها وصيد الربيب % % 10(@)(@@) % مولعا موزعا بها الدهر يرمي % % ها بسهم الخضاب غير مصيب % % PageV01P328 11(@)(@@) % عاجز واهن القوى يتعاطى % % صبغة الله في قناع المشيب % % 12(@)(@@) % رام إعجاب كل بيضاء خود % % بسواد الخضاب ذي التعجيب % % 13(@)(@@) % فتضاحكن هازئات وماذا % % يونق البيض من سواد جليب % % 14(@)(@@) % يا حليف الخضاب لا تخدع النف % % س فما أنت للصبا بنسيب % % 15(@)(@@) % ليس يجدي الخضاب شيئا من النف % % ع سوى أنه حداد كئيب % % 16(@)(@@) % فاتخذه على الشباب حدادا % وابك فيه بعبرة ونجيب % % 17(@)(@@) % وفتاة رأت خضابي فقالت % % عز داء المشيب طب الطبيب % % 18(@)(@@) % خاضب الشيب في بياض مبين % % حين يبدو وفي سواد مريب % % 19(@)(@@) % يا لها من غريرة ذات عين % غير مغرورة بشيب خضيب % % 20(@)(@@) % وحقيق لعورة الشيب أن تب % % دو 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms73# للغر غير ذي التدريب % % PageV01P329 21(@)(@@) % لهف نفسي على القناع الذي مح % % ح وأعقبت منه شر عقيب % % 22(@)(@@) % منع العين أن تقر وقرت % % عين واش بنا وعين رقيب % % 23(@)(@@) % شان ديباجة الشباب وأزرى % % بقوام له ولين عسيب % 24(@)(@@) % نفر الحلم ثم ثنى فأمسى % % خبب العرس أيما تخبيب % % 25(@)(@@) % شعر ميت لذي وطر حي % ي كنار الحريق ذات اللهيب % % 26(@)(@@) % في قناع من المشيب لبيس % ورداء من الشباب قشيب % % 27(@)(@@) % وأخو الشيب واللبانة في البي % % ض بحال كقتلة التغبيب % % 28(@)(@@) % معه صبوة الفتى وعليه % % صرفة الشيخ فهو في تعذيب % % 29(@)(@@) % يطبى للصبا فيدعى مجيبا % وهو يدعو وما له من مجيب % % 30(@)(@@) % ليس تنقاد غادة لهواه % وهو ينقاد كانقياد الجنيب % % PageV01P330 31(@)(@@) % ظلمتني الخطوب حتى كأني % % ليس بيني وبينها من حسيب % % 32(@)(@@) % سلبتني سواد رأسي ولكن % % عوضتني رياش كل سليب % % 33(@)(@@) % عوضتني أخا المعالي عليا % عوض فيه سلوة للحريب % % 34(@)(@@) % خرمي من الملوك أديب % لم يزل ملجأ لكل أديب % % 35(@)(@@) % يستغيث اللهيف منه بمدعو % و لدى كل كربة مستجيب % % 36(@)(@@) % أريحي له إذا حمد الكز % ز بنان تذوب للمستذيب % % 37(@)(@@) % يتلقى المدفعين عن الأب % % بواب بالبشر منه والترحيب % % 38(@)(@@) % لو أبى الراغبون يوما نداه % لدعاهم إليه بالترهيب % % 39(@)(@@) % رب أكرومة له لم تخلها % % قبله في الطباع والتركيب % % 40(@)(@@) % غربته الخلائق الزهر في النا % % س وما أوحشته بالتغريب % % PageV01P331 41(@)(@@) % يهب النائل الجزيل معيرا % طرفه الأرض ناكتا بالقضيب % % 42(@)(@@) % يتقي نظرة المدل بجدوا % % ه ويعتدها من التثريب % % 43(@)(@@) % بعد بشر مبشر سائليه % % بأمان لهم من التخييب % % 44(@)(@@) % حببت كفه السؤال إلى النا % % س جميعا وكان غير حبيب % % 45(@)(@@) % ما سعى والسعاة للمجد إلا % % سبق المحضرين بالتقريب % % 46(@)(@@) % لو جرى والرياح شأوا لأضحى % % جريها عند جريه كالدبيب % % 47(@)(@@) % من رآه رأى شواهد تغني % % عن سماع الثناء والتجريب % % 48(@)(@@) % فيه من وجهه دليل عليه % % مخبر عن ضريبة ذات طيب % % 49(@)(@@) % حكم الله بالعلا لعلي % وبحق النجيب وابن النجيب % % 50(@)(@@) % فليمت حاسدوه هما وغما % ما لحكم الإله من تعقيب % % PageV01P332 51(@)(@@) % جذل سلطانه المحكك في الخط % ب وعذق الجناة ذو الترحيب % % 52(@)(@@) % والنصيح الصريح نصحا إذا ما % % جمعوا بين رائب وحليب % % 53(@)(@@) % والذي رأيه لأسلحة الإب % % طال مثل الصقال والتذريب % % 54(@)(@@) % عنه تمضي ولو 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms74# تعدته أضحت % % من كليل مفلل وخشيب % % 55(@)(@@) % مدره الدين والخلافة ذو النص % % ح عن الحوزتين والتذبيب % % 56(@)(@@) % فل بالحجة الخصوم وبالكي % % د زحوف العدا ذوي التأليب % % 57(@)(@@) % رب مغنى لحزب إبليس أخلا % % ه فأمسى وما به من عريب % 58(@)(@@) % دمرت أهله مكائد كانت % % لأسود الطغاة كالتقشيب % % 59(@)(@@) % رتبته الملوك مرتبة المد % ره لا مخطئين في الترتيب % % 60(@)(@@) % قيم قوم الأمور فعادت % قيمات به من التحنيب % % PageV01P333 61(@)(@@) % واستناب الخطوب حتى أنابت % % وبما لا تنيب للمستنيب % % 62(@)(@@) % عنده للثأي طباب من التد % % بير يعي به ذوو التطبيب % % 63(@)(@@) % لوذعي له فؤاد ذكي % % ماله في ذكائه من ضريب % % 64(@)(@@) % يقظ في الهنات ذو حركات % % لسكون القلوب ذات الوجيب % % 65(@)(@@) % ألمعي يرى بأول ظن % آخر الأمر من وراء المغيب % % 66(@)(@@) % لا يروي ولا يقلب كفا % وأكف الرجال في تقليب % % 67(@)(@@) % يدرك الطلب بالبديهة دون ال % % عقب قبل التصعيد والتصويب % % 68(@)(@@) % حازم الرأي ليس عن طول تجري % % ب لبيب وليس عن تلبيب % % 69(@)(@@) % وأريب فإن مريغو نداه % % خادعوه رأيت غير أريب % % 70(@)(@@) % يتغابى لهم وليس لموق % بل للب يفوق لب اللبيب % % PageV01P334 71(@)(@@) % ثابت الحال في الزلازل منها % % ل لسؤاله انهيال الكثيب % % 72(@)(@@) % لين عطفه فإن ريم منه % % مكسر العود كان جد صليب % % 73(@)(@@) % مفزع للرعاة مرعى خصيب % لرعاياهم وفوق الخصيب % 74(@)(@@) % في حجاه وفي نداه أمانا % % ن من الخوف والزمان الجديب % % 75(@)(@@) % فحجاه لكل يوم عصيب % ونداه لكل عام شصيب % % 76(@)(@@) % أحسنت وصفه مساعيه حتى % % أفحمت كل شاعر وخطيب % % 77(@)(@@) % بل حذوا حذوها فراحوا يريحو % % ن من القول كل معنى غريب % % 78(@)(@@) % قد بلونا خلاله فحمدنا % % غيبها حمد ذائق مستطيب % % 79(@)(@@) % فانتجعنا به الحيا غير ذي الإق % لاع والبحر غير ذي التنضيب % % 80(@)(@@) % ما زجرنا وقد صرفنا إليه % % أوجه العيس بارحا ذا نعيب % % PageV01P335 81(@)(@@) % يممته بنا المطايا فأفضت % من فضاء إلى فضاء رحيب % % 82(@)(@@) % خلق منه واسع وفناء % لم يرعها به هدير كليب % % 83(@)(@@) % طاب لليعملات إذ يممته % وصلهن البكور بالتأويب % % 84(@)(@@) % لم يكن خفضها أحب إليها % % من رسيم إليه بعد خبيب % % 85(@)(@@) % ثقة إنهن يلقين مرعى % فيه ني لكل نضو شزيب % % 86(@)(@@) % أيهذا المهيب بي وبشعري % % لست ممن يجيب كل مهيب % % 87(@)(@@) % رفع الله رغبتي عن عطايا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms75# % % ك وما للعقاب والعندليب % % 88(@)(@@) % ثوبت بي إلى علي معالي % % ه فلبيت أول التثويب % % 89(@)(@@) % ماجد حارب الحوادث دوني % % بندى حاتم وبأس شبيب % 90(@)(@@) % لي في جاهه مآرب كانت % % لابن عمران في عصاه الشعيب % PageV01P336 91(@)(@@) % وإذا حز لي من المال عضوا % أرب العضو أيما تأريب % % 92(@)(@@) % أصبح الباذل المسبب لا زا % % ل مليا بالبذل والتسبيب % % 93(@)(@@) % ساجلت جاهه سحائب عرف % من يمينيه دائمات الصبيب % % 94(@)(@@) % قلت إذ جاد باللهى قبل سعي % % صادق منه غير ذي تكذيب % % 95(@)(@@) % يا رشاء تخضل منه يد الما % % تح قبل انغماسه في القليب % % 96(@)(@@) % بض لي من نداك قبل استقائي % % بك ريي وفضلة للشريب % % 97(@)(@@) % ذاك شيء من الرشاء غريب % يا ابن يحيى ومنك غير غريب % % 98(@)(@@) % ما أراني إذا خبطت بدلوي % % جمة الماء بالقليل النصيب % % 99(@)(@@) % لا لعمري وكيف ذاك وقبل ال % % متح رويتني بسجل رغيب % % 100(@)(@@) % بل أراني هناك لا شك أغدو % % ويدي منك ذات بطن عشيب % % PageV01P337 101(@)(@@) % بأبي أنت من جليل مهيب % مطلب العرف منه غير مهيب % % 102(@)(@@) % طنب المجد بالمكارم والبي % % ت بنصب العماد والتطنيب % % 103(@)(@@) % من يلقب فإن أسماءك الأس % % ماء يشغلن موضع التلقيب % % 104(@)(@@) % من جواد وماجد وكريم % وزعيم وسيد ونقيب % % 105(@)(@@) % تب من يرتجي لحاقك في المج % % د وما مرتجيك في تتبيب % % 106(@)(@@) % أعجز الطالبيك شأو بعيد % لك أدركته بعرف قريب % % 107(@)(@@) % هاكها مدحة يغني بها الرك % بان ما أرزمت روائم نيب % 108(@)(@@) % نظم الفكر درها غير مثقو % % ب إذا الدر شين بالتشعيب % % 109(@)(@@) % لم يعبها سوى قواف تشاغل % % ن عن المدح فيك بالتشبيب % % 110(@)(@@) % ولراجيك قبلها كلمات % هذبت فيك أيما تهذيب % % PageV01P338 111(@)(@@) % يطرب السامعين أيسر ما في % % ها وإن أنشدت بلا تطريب % % 112(@)(@@) % سودت فيك كل بيضاء تسوي % % دا تراه العقول كالتذهيب % % 113(@)(@@) % لو يناغي بيانها العجم يوما % عرب العجم أيما تعريب % % 114(@)(@@) % وهي مما أفاد تأديبك الفا % % ضل واها لذاك من تأديب % % 115(@)(@@) % كم ثواب أثبتنيه عليها % % كنت أولى به من المستثيب % % 116(@)(@@) % منعما نعميين نعمى مفيد % % أدبا نافعا ونعمى مثيب % % 117(@)(@@) % منك جاءت إليك يحدو بها الود % دعلى رغبة بلا ترغيب % % PageV01P339 البحر : - 1(@)(@@) % لم أطلها كما أطال رشاء % ماتح ساء ظنه بقليب % % 2(@)(@@) % حاش لله ليس مثلي 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms76# تظنى % % ظن سوء بمستقاك القريب % % 3(@)(@@) % غير أني امرؤ وحدت مقالا % مستتبا في كل قرم نجيب % % 4(@)(@@) % فأطلت المديح ما طال فيهم % % مع أني قصرت غير معيب % % PageV01P340 البحر : - 1(@)(@@) % تأمل العيب عيب % وليس في الحق ريب % 2(@)(@@) % وكل خير وشر % خلف العواقب غيب % 3(@)(@@) % إن يمسك الناس عني % % سيبا فلله سيب % 4(@)(@@) % يا رب غمة خطب % فيها من الصنع جيب % 5(@)(@@) % لا تحقرن سييبا % كم جر نفعا سييب % % PageV01P341 البحر : - 1(@)(@@) % يا ابن المسيب عشت في نعم % وسلمت من هلك ومن عطب % 2(@)(@@) % يا شاعر العجم الكرام كما % % أن ابن حجر شاعر العرب % 3(@)(@@) % يا قائد الظرفاء لا كذبا % يا قدوة الأدباء في الأدب % % 4(@)(@@) % أدرك ثقاتك إنهم وقعوا % % في نرجس معه ابنة العنب % 5(@)(@@) % فهم بحال لو بصرت بها % % سبحت من عجب ومن عجب % 6(@)(@@) % ريحانهم ذهب على درر % % وشرابهم در على ذهب % % 7(@)(@@) % كأس إذا ما الماء واقعها % % صاغ الحلى منها بلا تعب % % 8(@)(@@) % في روضة شتوية رضعت % % درر الحيا حلبا على حلب % 9(@)(@@) % من زهرة قد حفها شجر % % للطير فيها أيما لجب % % 10(@)(@@) % تتنفس الأنوار فيه لها % % فيهيج منها أيما طرب % % PageV01P342 11(@)(@@) % فتظل فيه بخير مصطحب % % وكأنها في شر مصطخب % % 12(@)(@@) % والعود يصخب كي تجاوبه % % موموقة معشوقة الصخب % % 13(@)(@@) % واليوم مدجون فحرته % % فيه بمطلع ومحتجب % % 14(@)(@@) % شمس تساترنا وقد بعثت % % ضوءا يلاحظنا بلا لهب % % 15(@)(@@) % يا نرجس الدنيا أقم أبدا % للاقتراح ودائم النخب % 16(@)(@@) % ذهب العيون إذا مثلت لنا % % در الجفون زبرجد القضب % 17(@)(@@) % لا زلت شفع الراح إنكما % % سكن القلوب ومنتهى الطلب % 18(@)(@@) % وأرى السماع مثلثا لكما % % كابن لأم حرة وأب % PageV01P343 البحر : - 1(@)(@@) % إذا لم يكن درهمي درهمي % % ن عندك لم يزك عند الغريب % % 2(@)(@@) % فزدني فوق الذي أستحق % ق ما تستحق بحق الأديب % 3(@)(@@) % وحق الأريب وحق اللبيب % % وحق الحسيب وحق النجيب % 4(@)(@@) % وإلا فلا فرق فيما لدي % ك بين البغيض وبين الحبيب % PageV01P344 البحر : - 1(@)(@@) % دعتني إلى فضل معروفكم % وجوه مناظرها معجبه % 2(@)(@@) % فأخلفتم ما توسمته % % وقل حميد على تجربه % 3(@)(@@) % وكم لمعة خلتها روضة % فألفيتها دمنة معشبه % 4(@)(@@) % ظلمتكم لا تطيب الفرو % % ع إلا وأعراقها طيبه % % 5(@)(@@) % وكنت حسبت فلما حسب % % ت عفى الحساب على المحسبه % % 6(@)(@@) % فهل تعذرون كعذركم 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms77# % بأن أصولكم المذنبه % 7(@)(@@) % خرجت موازنكم بالسوا % % ء عذرا بعذر فلا معتبه % PageV01P345 البحر : - 1(@)(@@) % نفسي الفداء لمن حبتني كفه % تفاحتين حكاهما في الطيب % 2(@)(@@) % فحلفت أني ما كحلت نواظري % % بمشاكل لهما ولا بضريب % 3(@)(@@) % فتوردت وتعصفرت وجناته % إذ قلت ذاك فأسرعت تكذيبي % % PageV01P346 البحر : - 1(@)(@@) % أعلم الناس بالنجوم بنو نو % % بخت علما لم يأتهم بالحساب % 2(@)(@@) % بل بأن شاهدوا السماء سموا % برقي في المكرمات الصعاب % 3(@)(@@) % ساوروها بكل علياء حتى % % بلغوها مفتوحة الأبواب % 4(@)(@@) % قد سمعنا مديحك الحسن الغض % ض ولكن لم نضطلع بالجواب % 4(@)(@@) % نظم شعر به ينظم شمل ال % مجد كالعقد فوق صدر الكعاب % 4(@)(@@) % هكذا يجتني الودود من الإخ % % وان أهل الأذهان والآداب % % 4(@)(@@) % مبلغ لم يكن ليبلغه الطا % % لب إلا بتلكم الأسباب % PageV01P347 البحر : - 1(@)(@@) % إذا ما مدحت المرء يوما ولم يثب % مديحي وحق الشعر في الحكم واجب % 2(@)(@@) % كفاني هجائيه قيامي بمدحه % % خطيبا وقول الناس لي أنت كاذب % PageV01P348 البحر : - 1(@)(@@) % وما الحسب الموروث لا در دره % % بمحتسب إلا بآخر مكتسب % 2(@)(@@) % إذا العود لم يثمر وإن كان شعبة % من المثمرات اعتده الناس في الحطب % 3(@)(@@) % وأنت لعمري شعبة من ذوي العلا % % فلا ترض أن تعتد من أوضع الشعب % 4(@)(@@) % وللمجد قوم ساوروه بأنفس % كرام ولم يرضوا بأم ولا بأب % 5(@)(@@) % رأيتك قد عولت بي في مدائحي % % على نائل الآباء في سالف الحقب % 6(@)(@@) % وذلك شيء كان غيري ناله % ولو كنت أيضا نلته كان قد ذهب % 7(@)(@@) % أتجعل نيلا ناله ابن محلم % ثواب مديحي فيك هذا هو العجب % 8(@)(@@) % فما رفد عبد الله والقرم طاهر % سواي بقاض عنك حقي الذي وجب % 9(@)(@@) % فلا تتكل إلا على مافعلته % ولا تحسبن المجد يورث بالنسب % 10(@)(@@) % فليس يسود المرء إلا بنفسه % % وإن عد آباء كراما ذوي حسب % PageV01P349 البحر : - 1(@)(@@) % إذا غمر المال البخيل وجدته % يزيد به يبسا وإن ظن يرطب % 2(@)(@@) % إذا كان مجرى كوكب سمت هامة % علاها وإلا اعتاص ذلك مطلبا % % 2(@)(@@) % أرى الحظ يأتي صاحب الحظ وداعا % ويعيي سواه ساعيا فيه متعبا % % 2(@)(@@) % وليس عجيبا ذاك منه فإنه % إذا غمر الماء الحجارة تصلب % PageV01P350 البحر : - 1(@)(@@) % لا تحسبن عرامي إن منيت به % % إحدى المواعظ أو بعض التجاريب % 2(@)(@@) % بل 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms78# البوار الذي ما بعد موقعه % نفع بوعظ ولا نفع بتجريب % 3(@)(@@) % ما بعد وعظي ما توعى العظات له % % ولا مواقع صولاتي بتدريب % PageV01P351 البحر : - 1(@)(@@) % بيوم بدر أعز الدين ناصره % وبابن بدر أعز الظرف والأدبا % % 2(@)(@@) % يممت بدر بني بدر فما انتسبت % % ألفاظه لي لكن وجهه انتسبا % % 3(@)(@@) % لا قيته وأنا المملوء من غضب % % على الزمان فتسرى عني الغضبا % % 4(@)(@@) % فلو حلفت لما كذبت حينئذ % أني هناك لقيت العجم والعربا % % 5(@)(@@) % أجدى فأحسن في الجدوى وأتبعني % % حمدا وأردفني شكرا ولا عجبا % % 6(@)(@@) % الله يكلؤه والله يؤنسه % فإنه بمعاليه قد اغتربا % % PageV01P352 البحر : - 1(@)(@@) % أبا جعفر لا زلت معطى وواهبا % % ومكسب أموال رغاب وكاسبا % % 2(@)(@@) % طلبت كساء منك إذ أنت عامل % على قرية النعمان تعطى الرغائبا % % 3(@)(@@) % فأوسعتني منعا إخالك نادما % عليه وفي تمحيصه الآن راغبا % % 4(@)(@@) % فإن حق ظني فاستقلني بمترص % يقيني إذا ما القر أبدى المخالبا % % 5(@)(@@) % وإن كان ظني كاذبا فهي هفوة % وما خلت ظني فيئة الحر كاذبا % % 6(@)(@@) % وما كان من آباؤك الخير أصله % ولبك مجناه ليمنع واجبا % % 7(@)(@@) % فعجل كسائي طيبا نحو شاكر % سيجنيك من حر الثناء الأطايبا % % 8(@)(@@) % وسلم من التخسيس والمطل بغيتي % % تكن تائبا لم يضح راجيه تائبا % % 9(@)(@@) % أجب راغبا لبى رجاءك إذ دعا % % إليك وعاصى فيك تلك التجاربا % % 10(@)(@@) % ولا ترجعن الشعر أخيب خائب % فما حق من رجاك رجعاه خائبا % % PageV01P353 11(@)(@@) % ويا سوأتا إن أنت سودت وجهه % فأصبح معتوبا عليه وعاتبا % % 12(@)(@@) % يذمك مظلوما وتلحاه ظالما % هناك فيستعدي عليه الأقاربا % % 13(@)(@@) % فإن احتمال الحر غرما يطيقه % % لأهون من تحويل سلم محاربا % % 14(@)(@@) % عجائب هذا الدهر عندي كثيرة % فيابن علي لا تزدني عجائبا % % 15(@)(@@) % وإن اعتذارا منك تلقاء حاجتي % % لأعجب من أن يصبح البحر ناضبا % % 16(@)(@@) % ودعني من ذكر الكساء فإنه % % حقير ودع عنك المعاذير جانبا % % 17(@)(@@) % نصيبي لا يذهب عليك مكانه % فتلقى غدا نصبا من اللوم ناصبا % % 18(@)(@@) % رزئنا جسيما من لقائك شاهدا % فعوض جسيما من حبائك غائبا % 19(@)(@@) % رأيت مواعيد الرجال مواهبا % وما حسن أن تسترد المواهبا % % 20(@)(@@) % رجاء وأى عنك الرجاء فلا يكن % % رخاء من الأرواح تقرو السباسبا % % PageV01P354 21(@)(@@) % علينا بنعماكم من الله أنعم % فلا تجعلوها بالجفاء مصائبا % % 22(@)(@@) % ولاتك ألهوبا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms79# من البرق خلبا % فما زلت شؤبوبا من الودق صائبا % % PageV01P355 البحر : - 1(@)(@@) % أبلغ أبا سهل فتى العجم الذي % % أضحت تمنى كونه منها العرب % 2(@)(@@) % يا من غدا وعزيمه ولسانه % سيفان شتى في الخطوب وفي الخطب % 3(@)(@@) % الحمد لله الذي من فضله % أنا رزقنا فيك حسن المنقلب % 4(@)(@@) % والحمد لله الذي صرف الردى % % والحمد لله الذي كشف الكرب % 5(@)(@@) % كنا نكلفك المواهب مرة % حتى إذا استنقذت من كف العطب % 6(@)(@@) % عظمت بك النعمى فقد ألهيتنا % % عن كل شيء كان فيه لنا أرب % 7(@)(@@) % فدع المواهب أنت موهبة لنا % % من ذي المعارج والمواهب لا تهب % 8(@)(@@) % إنا لنستحيي وقد وافيتنا % % من بعد يأس أن نكدك بالطلب % 9(@)(@@) % من ذا يراك وقد سلمت فلا يرى % % فيك الغنى لا في اللجين ولا الذهب % 10(@)(@@) % لا نبتغي شيئا سواك وإنما % % طلب امرىء ما بعد حاجته كلب % PageV01P356 البحر : - 1(@)(@@) % إن أبا حفص وعثنونه % كلاهما أصبح لي ناصبا % % 2(@)(@@) % قد أغريا بي يهجواني معا % وحدي وكان الأكثر الغالبا % % 3(@)(@@) % أقسمت ما استنجد عثنونه % حتى غدا لي خائفا هائبا % % 4(@)(@@) % إن كان كفؤا لي في زعمه % % فليعتزل لحيته جانبا % % PageV01P357 البحر : - 1(@)(@@) % رأيت الذي يسعى ليدرك حظه % كسار بليل كي يسامت كوكبا % % 2(@)(@@) % يسير فلا يستطيع ذاك بسيره % % وكيف وأنى رام شأوا مغربا % % 3(@)(@@) % ولم لم يسر وافاه لا شك طلبه % % بغير عناء بادئا ثم عقبا % % 4(@)(@@) % أرى الحظ يأتي صاحب الحظ وادعا % ويعيي سواه ساعيا فيه متعبا % % 5(@)(@@) % إذا كان مجرى كوكب سمت هامة % علاها وإلا اعتاص ذلك مطلبا % % PageV01P358 البحر : - 1(@)(@@) % عجبت لقوم يقبلون مدائحي % % ويأبون تثويبي وفي ذاك معجب % 2(@)(@@) % أشعري سفساف فلم يجتبونه % وإن لا تكن هاتي فلم لا أثوب % 3(@)(@@) % حلفت بمن لو شاء سد مفاقري % % بما لي فيه عن ذوي اللؤم مرغب % 4(@)(@@) % فما آفتي شعر إليهم مبغض % ولكنه منع إليهم محبب % 5(@)(@@) % وأعجب منهم معشر ليس فيهم % بشعري ولا شيء من الشعر معجب % 6(@)(@@) % براذين ألهاها قديما شعيرها % % عن الشعر تستوفي القضيم وتركب % 7(@)(@@) % من اللائي لا تنفك تجري سواكنا % بفرسانها تلقاء نار تلهب % 8(@)(@@) % تقوم بفرسان تحرك تحتها % % أفانين فالركبان لا الظهر تتعب % 9(@)(@@) % فوارس غارات مطاعين بالقنا % % قنا لا يرى 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms80# فيهن رمح مكعب % 10(@)(@@) % وليست بأيديهم تهز رماحهم % % ولكن بأحقيهم تهز فتوعب % PageV01P359 11(@)(@@) % ولا رمح منها بالنجيع مخضب % هناك ولكن بالرجيع مخضب % 12(@)(@@) % ولست ترى قرنا لهم يطعنونه % بل المركب المعلو قرن ومركب % % 13(@)(@@) % ترى كل عبد منهم فوق ربه % % ونيزكه الشبري فيه مغيب % 14(@)(@@) % وأعجب منهم جاهلون تعاقلوا % % وكلهم عما يتمم أنكب % 15(@)(@@) % أغثاء ما فيهم أديب علمته % % ولا قابل التأديب حين يؤدب % 16(@)(@@) % خلا أن آدابا أعيروا حليها % % فأضحت بهم يبكى عليها وتندب % 17(@)(@@) % وكم من معار زينة وكأنه % % إذا ما تحلى حليها يتسلب % 18(@)(@@) % بحقهم أن باعدوني وقربوا % % سواي وتقريب المباعد أوجب % 19(@)(@@) % رأى القوم لي فضلا يعاديه نقصهم % فمالوا إلى ذي النقص والشكل أقرب % 20(@)(@@) % خفافيش أعشاها نهار بضوئه % % ولاءمها قطع من الليل غيهب % PageV01P360 21(@)(@@) % بهائم لا تصغي إلى شدو معبد % وأما على جافي الحداء فتطرب % PageV01P361 البحر : - 1(@)(@@) % إذا خاب داع أو تناهى دعاؤه % % فإني داع والإله مجيب % 2(@)(@@) % دعاء امرىء أحييت بالعرف نفسه % وذاك دعاء لا يكاد يخيب % 3(@)(@@) % أدام لك الله المكارم والعلا % % فإنهما شيء إليك حبيب % 4(@)(@@) % وأبقاك للمداح يهدون مدحهم % % إليك على علاتهم وتثيب % 5(@)(@@) % تكشف ذاك الشكو عنك وصرحت % محاسن وجه بردهن قشيب % 6(@)(@@) % كما انكشفت عن بدر ليل غمامة % أظلت وولت والمراد خصيب % 7(@)(@@) % أغاثت ولم تصعق وإن هي أرعدت % % فمات بها جدب وعاش جديب % 8(@)(@@) % شكاة أجدت منك ذكرى وأنشأت % % سحائب معروف لهن صبيب % 9(@)(@@) % وأعقبها برء جديد كأنه % % شباب رديد شق عنه مشيب % 10(@)(@@) % وبالسبك راقت نقرة وسبيكة % وبالصقل راع المنتضين قضيب % PageV01P362 11(@)(@@) % ففي كل دار فرحة بعد ترحة % وفي كل ناد شاعر وخطيب % 12(@)(@@) % يقولون بالفضل الذي أنت أهله % وكلهم فيما يقول مصيب % 13(@)(@@) % ولو صين حي عن شكاة لكنته % ولكن لكل في الشكاة نصيب % 14(@)(@@) % وفي الصبر للشكو الممحص محمل % وفي الله والعرف الجسيم طبيب % 15(@)(@@) % وأنت القريب الغوث من كل بائس % دعاك فغوث الله منك قريب % 16(@)(@@) % أبى الله إخلاء المكان يسده % فتى ما له في العالمين ضريب % 17(@)(@@) % أعاذك أنس المجد من كل وحشة % فإنك في هذا الأنام غريب % 18(@)(@@) % وتاب إليك الدهر من كل سيء % وجاءك يسترضيك وهو منيب % 19(@)(@@) % ولا زال للأعداء في 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms81# كل حالة % وللمال يوم من يديك عصيب % PageV01P363 البحر : - 1(@)(@@) % لا تهولنك شمس كسفت % دون أن تطلع من مغربها % % 2(@)(@@) % هان ذاك الرزء فيها مثلما % % هان ما غرك من مطلبها % % 3(@)(@@) % هي نار وافقت مطفئها % % لست بالآيس من ملهبها % % 4(@)(@@) % فابك من تشفق من معطبه % فلقد أومنت من معطبها % % 5(@)(@@) % ضل باك إن أبيخت جمرة % سوف تذكيها يدا مثقبها % % 6(@)(@@) % ليس للشمس إذا ما كسفت % غير شمس تخلف الشمس بها % % 7(@)(@@) % طلة الصوت إذا ما غردت % % ركبت بدعة في موكبها % % 8(@)(@@) % من بنات الروم لا يكذبنا % % لونها المشرق عن منصبها % % 9(@)(@@) % قامة الغصن إذا ما اعتدلت % % قامة الغصن إلى منكبها % % 10(@)(@@) % شهد الشاهد من أحسنها % % فحكى الغائب من أطيبها % % PageV01P364 11(@)(@@) % نشفع الحسن بإحسان لها % % تجلب الأفراح من مجلبها % % 12(@)(@@) % فهي حسب العين من نزهتها % % وهي حسب الأذن من مطربها % % 13(@)(@@) % تشرع الألحاظ في وجنتها % % فتلاقي الري في مشربها % % 14(@)(@@) % وجنة للغنج فيها عقرب % وبلاء الصب من عقربها % % 15(@)(@@) % وإذا قامت إلى ملعبها % % كمهاة الرمل في ربربها % % 16(@)(@@) % سألت أردافها أعطافها % % هل رأت أوطأ من مركبها % % PageV01P365 البحر : - 1(@)(@@) % كساء بني نوبخت مهلا فإنني % % أراك تناغي طيلسان بني حرب % 2(@)(@@) % أعيذك أن تأبى مسيرة ليلة % وتصبر للتسيير في الشرق والغرب % 3(@)(@@) % كسائي كسائي إنه الدرب بيننا % % فلا تدع الثغر المخوف بلا درب % 4(@)(@@) % ولا تحسبني لا أغرد بالتي % % تليني بها في الحفل طورا وفي الشرب % 5(@)(@@) % فاعف بحقي في الشتاء فلن أرى % % قبول كساء منك في الصيف ذي الكرب % 6(@)(@@) % وصبرا فإن الحر باللوم تبتغى % % إثابته والعبد بالشتم والضرب % % PageV01P366 البحر : - 1(@)(@@) % سأقصر عن خالد منطقي % % وعن أمه حافظا منصبي % % 2(@)(@@) % لأن إحاطتها بالأيور % % توهمنيه من أبي % % PageV01P367 البحر : - 1(@)(@@) % وتسليني الأيام لا أن لوعتي وتسليني الأيام لا أن لوعتي % % ولا حزني كالشيء ينسى فيعزب % 2(@)(@@) % ولكن كفاني مسليا ومعزيا % بأن المدى بيني وبينك يقرب % PageV01P368 البحر : - 1(@)(@@) % ليس عن شركم ولا عن أذاكم % مستماز ولا ذرى للجنوب % 2(@)(@@) % قل من خيركم نصيبي ولكن % أنا من شركم كثير النصيب % 3(@)(@@) % إن تباعدت نالني من بعيد % أو تقربت نالني من قريب % PageV01P369 البحر : - 1(@)(@@) % هي سوداء غير أن عليها % % ظلمة تدلهم منها القلوب % 2(@)(@@) % فتراها كأنها حين نبدو % % عظلم 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms82# فوق صدرها مصبوب % PageV01P370 البحر : - 1(@)(@@) % أكلت رغيفا عند عيسى فملني % % وكان كهمي من محب مقرب % 2(@)(@@) % رآني قليل الخوف من لحظاته % % وذلك من شأني له غير معجب % % 3(@)(@@) % يريد أكيلا رزؤه من طعامه % % كرزء كتاب من تراب مقرب % 4(@)(@@) % إذا لحظته عينه عند مضغه % % طوى الأنس طي الخائف المترقب % 5(@)(@@) % يحب الخميص البطن من أكلائه % % ويضحي ويمسي بطنه بطن مقرب % % 6(@)(@@) % وما أنس ذي أنس لعيسى بمؤنس % ولا وقع أضراس الأكيل بمطرب % % 7(@)(@@) % تزود إذا آكلته فهي أكلة % وما أختها إلا كنعقاء مغرب % PageV01P371 البحر : - 1(@)(@@) % أنى هجوت بني ثوابه % يا صاحب العين المصابه % 2(@)(@@) % أهل السماحة والرجا % % حة والأصالة واللبابه % 3(@)(@@) % القائلين الفاعلي % % ن أولي الرياسة والنقابه % 4(@)(@@) % والفارعين المجد وال % % بانين فوقهم قبابه % 5(@)(@@) % الآخذين بأنفه % لا كالأولى علقوا ذنابه % 6(@)(@@) % نجب تلوح إذا بدوا % % بوجوهم غرر النجابه % 7(@)(@@) % لم يبق طود للعلا % % لا يرتقي أحد هضابه % 8(@)(@@) % إلا كأن الله ذل % لل عامدا لهم صعابه % 9(@)(@@) % وإذا استعار الحمد يو % % ما معشر ملكوا رقابه % 10(@)(@@) % يا رب رأي فيهم % لا تبلغ الآراء قابه % PageV01P372 11(@)(@@) % وندى إذا فقد الندى % % يتتبع العافي مصابه % 12(@)(@@) % قوم إذا صدع تفا % % قم مرة كانوا رئابه % 13(@)(@@) % وإذا شتاء أخلفت % أنواؤه خلفوا سحابه % 14(@)(@@) % جعلت بيوتهم مع ال % % بيت العتيق لنا مثابه % 15(@)(@@) % ننتاب فيها نائلا % جزلا متى شئنا انتيابه % 16(@)(@@) % ويلوذ لائذنا بها % % إن حبلنا اضطراب اضطرابه % 17(@)(@@) % لم يدعهم مستنجد % إلا ودعوته المجابه % 18(@)(@@) % كم عائذ من دهره % بهم إذا ما الدهر رابه % 19(@)(@@) % خذ في النوائب منهم % حبلا ولا تخف انقضابه % 20(@)(@@) % أمثالهم فاعمم بمد % % حك عمهم حسن الصحابه % PageV01P373 21(@)(@@) % وأخصص أبا العباس بح % % ر الجود حقا لا سرابه % 22(@)(@@) % ملك يظل إذا غدا % % تتعاور الأيدي ركابه % 23(@)(@@) % سائل بسؤدده المعا % % شر بل نداه وانسكابه % 24(@)(@@) % يخبرك عنه باليقي % % ن ويجعل الجدوى جوابه % 25(@)(@@) % غيث إذا استمطرته % ألفيت من ذهب ذهابه % 26(@)(@@) % قعد العفاة وسيبه % يختب نحوهم اختبابه % 27(@)(@@) % أغنتهم نفحاته % حتى لقد هجروا جنابه % 28(@)(@@) % لكن وفود الشكر لا % % تنفك قد شحنت رحابه % 29(@)(@@) % ولما ابتغى من شاكر % شكر النوال ولا استثابه % 30(@)(@@) % أعطى الذي لو سيم حا % % تم أخذه يوما لهابه % PageV01P374 31(@)(@@) % فأباحه حمد الورى % % مال أباحهم 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms83# انتهابه % 32(@)(@@) % كم راية للمجد فا % % ز بها وأخطأها عرابه % 33(@)(@@) % ويجيل في الخطب الذي % % تضحي شواكله تشابه % 34(@)(@@) % رأيا إذا الخطأ المخي % % ل أطالت الفرق اعتقابه % 35(@)(@@) % لم يحتجب عنه الصوا % % ب وأين عنه ترى احتجابه % 36(@)(@@) % لا رأي في مجهولة % يجتاب ظلمتها اجتيابه % 37(@)(@@) % تجلو به سدف العما % % ية عنك أو ترضى انجيابه % 38(@)(@@) % أجلى البصيرة لا تقح % حمه تخاف ولا ارتيابه % 39(@)(@@) % ماضي القضاء إذا ارتأى % % لم يستطع شك جذابه % 40(@)(@@) % ما عاب ذو طعم ريا % % ضته الأمور ولا اقتضابه % % PageV01P375 41(@)(@@) % وبكيده يروي القنا % % علقا ويختضب اختضابه % 42(@)(@@) % وتصيد لحمتها عقا % % ب الموت يوم ترى عقابه % 43(@)(@@) % فضل الرجال ذوي الكما % % ل كما اعتلى جبل ظرابه % 44(@)(@@) % أقسمت بالملك الذي % % لم يستطع ملك غلابه % 45(@)(@@) % لقد استدر له المدي % % ح وما تكلفت احتلابه % 46(@)(@@) % ولقد حلفت بما حلف % % ت به وما أبغي خلابه % 47(@)(@@) % يا بعده مما افتري % % ت من الفواحش واغترابه % 48(@)(@@) % خنثت أرجل من مشى % % ونسيت خنثك يا ترابه % 49(@)(@@) % لو أن عرسك بايتت % % ه لما دعته إذا لبابه % 50(@)(@@) % مع أنه لم يجتنب % رجل حمى الدين اجتنابه % PageV01P376 51(@)(@@) % وهل اتقى كتقائه % % أحد أو ارتقب ارتقابه % 52(@)(@@) % ما ضره أهجوته % يا وغد أم طنت ذبابه % 53(@)(@@) % أنشأت تهجوه فأك % ثرت الكلام بلا إطابه % 54(@)(@@) % وأحلت في بيت وما % % زلت البعيد من الإصابه % 55(@)(@@) % أنى يكون ممددا % رجل وقد رفعوا كعابه % 56(@)(@@) % لكنه بيت عرا % % ك لذكر معناه صبابه % 57(@)(@@) % فعميت عن سنن الطري % % ق وظلت تركب كل لابه % 58(@)(@@) % كم صرعة بين العبي % % د وخلوة لك مسترابه % % 59(@)(@@) % أصبحت تنحلها الكرا % % م بوجنة فيها صلابه % 60(@)(@@) % وكذاك مثلك ينحل السا % % دات عرته وعابه % PageV01P377 61(@)(@@) % قد قلت إذ خبرت عن % % ك بما أشبت من الأشابه % 62(@)(@@) % هلا نهاه عن الكرا % % م وقيله فيهم كذابه % 63(@)(@@) % عور وإعورار به % % لا تضبط الأيدي حسابه % 64(@)(@@) % منه بلاء باسته % ليست عليه بالمثابه % 65(@)(@@) % كلب عوى مستقتلا % والحين يستعوي كلابه % 66(@)(@@) % فهدى إليه عواؤه % % لما عوى رئبال غابه % 67(@)(@@) % ألقى كلاكله علي % % ه وعل من دمه حرابه % 68(@)(@@) % فاظنن بكلب شام في % % ه الليث مخلبه ونابه % 69(@)(@@) % أنى يسب بني ثوا % % بة أو عبيد بني ثوابه % 70(@)(@@) % من كل 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms84# شيء يستتا % % ب وما استه بالمستتابه % PageV01P378 71(@)(@@) % كم إخوة وارت له % % سوءاتهم تلك الغرابه % 72(@)(@@) % لإخاله يوم القيا % % مة باسته يؤتى كتابه % 73(@)(@@) % إذ لا يرى ذنب له % % إلا بها ولي اكتسابه % 74(@)(@@) % بل كل عضو منه يو % % جد مذنبا حاشا عنابه % 75(@)(@@) % ولو استطاع لصاغه % % دبرا ولالتمس انقلابه % 76(@)(@@) % ليكون بابا للفيا % % شل عجل الله اجتبابه % 77(@)(@@) % يا من لحاه على الفوا % % حش يرتجى يوما متابه % 78(@)(@@) % خل الشقي وحية % تنساب فيه وانسيابه % 79(@)(@@) % أنى يلاقي القارظ ال % % عنزي من يرجو إيابه % 80(@)(@@) % ماذا نقمت على امرىء % يؤوي إلى حجر حبابه % PageV01P379 81(@)(@@) % وله نعاج لا يزا % % ل مخليا فيها ذئابه % 82(@)(@@) % لا بل نساء يزدبب % ن أيور ناكته ازدبابه % 83(@)(@@) % هن المآب لكل من % % أمسى ولم يعرف مآبه % 84(@)(@@) % ناهيك من ثقة سها % % م القوم مودعة جعابه % 85(@)(@@) % لم يعتصب ذو حرمة % بعصائب العار اعتصابه % 86(@)(@@) % كلا ولا احتقب المآ % % ثم في إباحتها احتقابه % 87(@)(@@) % ومعنف لي أن هجو % تك يا أقل من الصؤابه % 88(@)(@@) % قال اطو عرضك لا تدن % نسه وأودعه عيابه % 89(@)(@@) % ما كفء عرضك عرض مع % % رور فلا تحكك نقابه % 90(@)(@@) % فأجبته إذ قال ذا % % ك بخطبة فصلت خطابه % % PageV01P380 91(@)(@@) % لو سب غير بني ثوا % % بة ما جشمت لهم سبابه % 92(@)(@@) % ولما رضيت لمنطقي % % فرع اللئيم ولا نصابه % 93(@)(@@) % لكنني أحميهم % ما حالفت بحري صبابه % 94(@)(@@) % وأرى يسيرا فيهم % تدنيس عرضي أو ذهابه % 95(@)(@@) % إن المكاره في حما % % يتهم عذاب مستطابه % 96(@)(@@) % واليتهم ما حالفت % أوعال شابة هضب شابه % 97(@)(@@) % وإذا امرؤ عاداهم % % أصفرت من ودي وطابه % 98(@)(@@) % ومتى امترى خلف الوصا % % ل ملأت من هجر علابه % 99(@)(@@) % إذ لا أبالي فيهم % حسك العدو ولا ضبابه % 100(@)(@@) % من كان مكتئبا لذا % % ك فقد توخيت اكتئابه % PageV01P381 101(@)(@@) % لا زال يقدح وريه % في صدره أبدا قحابه % 102(@)(@@) % قلبي حمى لهم فلم % يحتل غيرهم شعابه % 103(@)(@@) % لم لا وذكراهم له % % روح إذا ما الهم نابه % 104(@)(@@) % ومتى تباعد مطلب % فبيمنهم نرجو اقترابه % 105(@)(@@) % وتحريا لرضاهم اس % تنفرت من شعري غضابه % 106(@)(@@) % وسللت دونهم علي % % ك ودون حورتهم عضابه % 107(@)(@@) % سامت قوافيك السما % % ء ورمت أمرا ذا مهابه % 108(@)(@@) % فاربع عليك فمن رمى % % صعدا بجندله أصابه % % 109(@)(@@) % أقذر وأخبث 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms85# بالمنى % % إذا عبيط السلح شابه % 109(@)(@@) % هتما لفيك فما تخي % ير ما يشوب به لعابه % PageV01P382 109(@)(@@) % لا سيما بفم به إذا % % أهدى حشاك لها خضابه % 109(@)(@@) % ما كان قدرك أن تفو % % ه بمدحهم بله المعابه % 109(@)(@@) % تمري الأيور به إذا % % أهدى حشاك لها خضابه % % 110(@)(@@) % وإخال ذلك لم يزد % % في خبثه لكن أطابه % % 111(@)(@@) % هلا مسخت وقد ذكر % % تهم بجد أو دعابه % 112(@)(@@) % لكن مسخ المسخ مم % تنع ولا سيما الزبابه % 113(@)(@@) % أتظن أنك لو مسخ % % ت بلغت قبحك أو قرابه % 114(@)(@@) % ما يمسخ المسخ الذي % % لم يكس ما يخشى استلابه % 115(@)(@@) % كلا وما بين الفرا % % ق وبين وجهك من قرابه % 116(@)(@@) % ذكراهم بسل على % % من كان مثلك في الجنابه % PageV01P383 117(@)(@@) % لا بل على من مس ثو % % بك ثم لم يغسل ثيابه % 118(@)(@@) % لا بل على من خاض ظل % لك ثم لم يسلخ إهابه % 119(@)(@@) % لم تهجهم إلا لكي % % تهجى فتذكر في عصابه % 120(@)(@@) % طلب النباهة إذ رأي % % تك من خمولك في غيابه % 121(@)(@@) % جاه ترممه ودب % ر تبتغي أبدا خرابه % 122(@)(@@) % فإذا ظفرت بحادر % ذي كدنة ترضى وثابه % % 123(@)(@@) % لم تلف عبد الله بل % % ألفيت زيدا وانتصابه % 124(@)(@@) % ولما انتصبت معاملا % ضرب المواثب بل ضرابه % 125(@)(@@) % بعجارم يشفي الفقا % % ح إذا سغبن من السغابه % 125(@)(@@) % وعلاك عبد الله ين % % ظمبين عجبك والذؤابه % PageV01P384 125(@)(@@) % ولربما كان انتصا % % ب المرء للفعل انكبابه % 125(@)(@@) % ذي ضل تفدية هنا % % لك تستديم بها هبابه % 126(@)(@@) % يا ضل تفدية هنا % % لك تستديم بها هبابه % 127(@)(@@) % تبت يداك مفديا % ما تب من أحد تبابه % 128(@)(@@) % شيخ إذا حدث أها % % ن مشيبه فدى شبابه % % 129(@)(@@) % لهفي عليك مخنثا % وعلى لسانك ذي الذرابه % 130(@)(@@) % ماذا يخوض . . . في % % ك من الكتابة والخطابه % 131(@)(@@) % هلا شكرت بني ثوا % % يه ما حدا حاد ركابه % 132(@)(@@) % أن صادفوا من قد علم % ت وعبده يحشو جرابه % 133(@)(@@) % إذ لم يروا تقريعه % % يوما بذاك ولا اغتيابه % PageV01P385 134(@)(@@) % كرما فكان جزاؤهم % % منه أن انتدب انتدابه % 135(@)(@@) % يهجوهم بغيا ويل % % صق دائما بهم شغابه % 136(@)(@@) % وكذلك البغاء با % % غ إن تفهمت انتسابه % 137(@)(@@) % رجل يطالب غير ما % % جعل الإله له طلابه % 138(@)(@@) % سائل بذلك بخسه % حق الغواني واغتصابه % 139(@)(@@) % زحم الأيور على الفرو 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms86# % % ج معا فسد بها نقابه % 140(@)(@@) % فاه الخبيث ومنخري % ه وفقحة منه رحابه % 141(@)(@@) % وحشا مسامعه بها % % فحمى معاتبه عتابه % 142(@)(@@) % ثم اغتدى متبرئا % من ذاك ينحله صحابه % 143(@)(@@) % أسدى إليك القوم مع % % روفا فلم تحسن ثوابه % PageV01P386 144(@)(@@) % ستروا عليك وقد رأوا % % نفس الفضيحة لا الإرابه % 145(@)(@@) % فجحدتهم جحدا جعل % % ت قبيح قرفكهم قطابه % 146(@)(@@) % وغدوت بهات الجبي % % ن وأنت لم تمسح ترابه % 147(@)(@@) % ترميهم بالإفك مط % طرحا سداهم واحتسابه % 148(@)(@@) % أصبح تبين من رمي % ت وتنحسر عنك الضبابه % 149(@)(@@) % ستذم ما اكتسبت يدا % % ك إذا لقيت غدا عقابه % 150(@)(@@) % وتقر أنك جاهل % لم تأت من أمر صوابه % 151(@)(@@) % من بات يحتطب الأفا % % عي ليله ذم احتطابه % 152(@)(@@) % ولرب مثلك قد أطل % ت على خطيئته انتحابه % 153(@)(@@) % وجعلت في نظم الهجا % % ء فياش ناكته سخابه % PageV01P387 154(@)(@@) % حتى غدا بعد المرا % % ح عليه سربال الكآبه % 155(@)(@@) % مترقبا من فوقه % يخشى عذابي وانصبابه % 156(@)(@@) % وأنا الذي قدح الهجا % % ء بزنده قدما شهابه % 157(@)(@@) % وأنا الذي من أرضه % يمتار حنظله وصابه % 158(@)(@@) % وإذا تمرد مارد الش % شعراء ولاني عذابه % 159(@)(@@) % أما إذا استفتحته % % فلأفتحن عليك بابه % 160(@)(@@) % ولأصلينك جاحم الش % % شعر الذي هجت التهابه % 161(@)(@@) % قذع إذا سفع الحدي % % د سعير أيسره أذابه % 162(@)(@@) % خذها جواب مفوه % ما زال يفحم من أجابه % 163(@)(@@) % جم الصياب إذا امرؤ % كثرت خواطئه صيابه % PageV01P388 164(@)(@@) % يفري الفري بمقول % لو هزه للصخر جابه % 165(@)(@@) % يمتاح من بحر يهو % % ل العين حين ترى حدابه % 166(@)(@@) % ويصم من سمع التطا % % م الموج فيه واصطخابه % 167(@)(@@) % لا ماد رأيا بعدها % % لك إن صدمت بها عبابه % PageV01P389 البحر : - 1(@)(@@) % وغزال ترى على وجنتيه % قطر سهميه من دماء القلوب % 2(@)(@@) % لهف نفسي لتلك من وجنات % وردها ورد شارق مهضوب % 3(@)(@@) % أنهلت صبغ نفسها ثم علت % من دماء القتلى بغير ذنوب % 4(@)(@@) % بل أتى ما أتى إليهم من الأم % % ر بوتر لديهم مطلوب % 5(@)(@@) % جرحته العيون فاقتص منها % % بجوى في القلوب دامي الندوب % 6(@)(@@) % لم يعادله في كمال المعاني % % توأم الحسن من بني يعقوب % PageV01P390 البحر : - 1(@)(@@) % أيا فضل إنك فضل أصا % % ب شيخك من حيث لم يكتسب % 2(@)(@@) % ومن يتق الله يصنع له % % ويرزقه من حيث لم يحتسب % 3(@)(@@) % جزى الله شبان 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms87# جيراننا % % جزاء الشفيق الحفي الحدب % 4(@)(@@) % يرقون للشيخ منا العقيم % فيأتون من بره ما يجب % PageV01P391 البحر : - 1(@)(@@) % لعمرك ما السيف سيف الكمي % بأخوف من قلم الكاتب % 2(@)(@@) % له شاهد إن تأملته % ظهرت على سره الغائب % 3(@)(@@) % أداة المنية في جانبيه % % فمن مثله رهبة الراهب % 4(@)(@@) % سنان المنية في جانب % وسيف المنية في جانب % 5(@)(@@) % ألم تر في صدره كالسنان % % وفي الردف كالمرهف القاضب % PageV01P392 البحر : - 1(@)(@@) % طربت ولم تطرب على حين مطرب % وكيف التصابي بابن ستين أشيب % 2(@)(@@) % ومما حداك الشوق نوح حمامة % % أرنت على خوط من البان أهدب % 3(@)(@@) % مطوقة تبكي ولم أر قبلها % % بدا ما بدا من شجوها لم تسلب % PageV01P393 البحر : - 1(@)(@@) % تظلم عمرو من هجائي وقد علت % بما قلت فيه حاله ومراتبه % 2(@)(@@) % وأغفل ظلميه بقصديه راغبا % فواعجبا والدهر جم عجائبه % 3(@)(@@) % ويا من جنى قصدي أبا الخطم إنه % % تمنع واعتاصت علي مطالبه % 4(@)(@@) % أعيذك من طعن الأعادي وقولهم % % جواد تقضت من نداه مآربه % PageV01P394 البحر : - 1(@)(@@) % اكتهلت همتي فأصبحت لا أب % هج بالشيء كنت أبهج به % 2(@)(@@) % وحسب من عاش من خلوقته % خلوقة تعتريه في أربه % PageV01P395 البحر : - 1(@)(@@) % أبا حسن وأنت فتى أديب % له في كل مكرمة نصيب % 2(@)(@@) % أترضى أن تكون من المعالي % % بمدعى مستغاث لا يجيب % 3(@)(@@) % أسأت فهل تنيب إلي أم لا % % فها أنا ذو الإساءة والمنيب % 4(@)(@@) % ظننت بك الجميل فهل تلمني % % فإنك قد تصيب ولا أصيب % 5(@)(@@) % لقد ولدتك آباء كرام % من الآباء ليس لهم ضريب % 6(@)(@@) % فلا تخلفهم في أمر مثلي % % خلافة من أطيب وما يطيب % 7(@)(@@) % أحال المنجبون عليك أمري % % فلم يقبل حوالتهم نجيب % 8(@)(@@) % وقلت ورثت مجدهم فحسبي % % بإرثهم وذلك ما أعيب % 9(@)(@@) % ألا أن الحسيب لغير حي % غدا وعماده ميت حسيب % 10(@)(@@) % أترضى أن يقول لك المرجي % % لأنت المرء راجيه يخيب % PageV01P396 11(@)(@@) % رضيت إذا بما لا يرتضيه % من القوم الكريم ولا اللبيب % 12(@)(@@) % أتأمن أن تواقعك القوافي % % ويوم وقاعها يوم عصيب % 13(@)(@@) % أبن لي ما الذي تأوي إليه % % إذا ما القذع صدره النسيب % 14(@)(@@) % أمعتصم بأنك ذو صحاب % من الشعراء نصرهم قريب % 15(@)(@@) % وما تجدي عليك ليوث غاب % بنصرتها إذا دماك ذيب % 16(@)(@@) % توقي الداء خير من تصد % لأيسره وإن 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms88# قرب الطبيب % 17(@)(@@) % أذلك أم تدل بعز قوم % % قد انقرضوا فما منهم عريب % 18(@)(@@) % ألا ناد البرامكة انصروني % % على الشعراء وانظر هل مجيب % 19(@)(@@) % وكيف يجيبك الشخص الموارى % % وكيف يعزك الخد التريب % 20(@)(@@) % ولو نشروا لما نصروا وقالوا % % أربت فكان حقك ما يريب % % PageV01P397 21(@)(@@) % أتدعونا إلى حرب القوافي % % لتحربنا السلامة يا حريب % 22(@)(@@) % ألم تر بذلنا المعروف قدما % مخافة أن يقوم بنا خطيب % 23(@)(@@) % أذلنا دون ذلك كل علق % وملتمس السلامة لا يخيب % 24(@)(@@) % عليك ببذل عرفك فاستجره % % كذلك يفعل الرجل الأريب % PageV01P398 البحر : - 1(@)(@@) % رأيت الأخلاء في دهرنا % % وأجدر بنائبة أن تنوبا % % 2(@)(@@) % إذا حشدوا لأخ مرة % أظلوه للمن عودا ركوبا % % 3(@)(@@) % سأستنصر الله حسبي به % نصيرا وإلا فحسبي حسيبا % % PageV01P399 البحر : - 1(@)(@@) % إذا خلة خانتك بالغيب عهدها % % فلا تجعلن الحزن ضربة لازب % 2(@)(@@) % وهب أنها الدنيا التي المرء موقن % بفرقتها والمرء في شأن لاعب % PageV01P400 البحر : - 1(@)(@@) % طلعت شنطف صباحا فقلنا % % كيف أمسيت يا فساء الكرنب % 2(@)(@@) % أجابت بشر حال . فقلنا % % لم فقالت من شهوة الزرنبنب % 3(@)(@@) % فأشرنا به عليها فقالت % % أي أير يهش للطنبلنب % 4(@)(@@) % ليس ذنبي إلى الأيور سوى وج % رهي . فقلنا بخ . بخ أي ذنب % % PageV01P401 البحر : - 1(@)(@@) % يا لهف نفسي للأحبه % ورجائهم غوث الأطبه % 2(@)(@@) % لم يشفهم كد الطبي % % ب ولا عنايته المكبه % 3(@)(@@) % لم تقض حاجتهم ولا % % نفعتهم نفس محبه % 4(@)(@@) % ما زارهم فرح ولا % % كانت كروبهم مغبه % 5(@)(@@) % ترحا لدار إنما % % سكانها رفق مخبه % 6(@)(@@) % تقتادهم نحو الردى % % طرق إليه مستتبه % 7(@)(@@) % دار عزيب خيرها % % وترى الشرور بها مربه % 8(@)(@@) % أدوت وغاب دواؤها % % عن كل نفس مستطبه % 9(@)(@@) % وصفت محبة أهلها % % منها لمدغلة مضبه % 10(@)(@@) % ناموا على صيحاتها % % بهم الشداد المستهبه % PageV01P402 11(@)(@@) % كم غر قوما حلوها % % من مرها إلا الألبه % 12(@)(@@) % فتهافتوا في شهدها % % فتهالكوا مثل الأذبه % 13(@)(@@) % ما آنس الإنسان بالد % دنيا الدبوب له المدبه % 14(@)(@@) % تغدو عليه عدوة % ويعدها أما وحبه % 15(@)(@@) % يا لهف نفسي للأحب % بة لو شفى اللهف الأحبه % PageV01P403 البحر : - 1(@)(@@) % ولحية سائلة منصبه % شهباء تحكي ذنب المذبه % 2(@)(@@) % ألا فتى يرضي بذاك ربه % يضم كفيه على إرزبه % 3(@)(@@) % ثمة يعلو رأسه بضربه % % يشفي بها قلوبنا وقلبه % PageV01P404 البحر : - 1(@)(@@) % دريرة تجلب الطربا % % ونزهة تجلب الكربا % % 2(@)(@@) % تغني هذه فيظل 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms89# % ل عنك الحزن قد عزبا % % 3(@)(@@) % وتعوي هذه فتطي % % ل منك الحزن والوصبا % % 4(@)(@@) % أقول لجامع لهما % % لقد أحضرتنا عجبا % % 5(@)(@@) % أتجمع بين مختلفي % ن ذا صعدا وذا صببا % % 6(@)(@@) % فقال ولم يزل لحنا % بحجته وقد كذبا % % 7(@)(@@) % دعونا هذه لنقل % ل من تموزنا اللهبا % % 8(@)(@@) % فلما أسرفت في البر % د لم نأمن به العطبا % % 9(@)(@@) % فجئنا بالتي هي ضد % دها لتلين ما صعبا % % 10(@)(@@) % وظني أنه رجل % يحاول عندها الريبا % % PageV01P405 11(@)(@@) % ولو كان الفتى عفا % إذا ما استعمل الكذبا % % PageV01P406 البحر : - 1(@)(@@) % قد كنت تبذل لي كتابك مرة % فالآن فاكتب لي إليك كتابا % % 2(@)(@@) % فأنا الزعيم عليك يا ابن محمد % أن الثواب يكون منك جوابا % % 3(@)(@@) % لا تشغلني بالعتاب فإن لي % % شغلا بمدحك ينفذ الأحقابا % % 4(@)(@@) % قد أورق العود الذي أملته % وحلا جناه لمجتنيه وطابا % % PageV01P407 البحر : - 1(@)(@@) % نجاك يا ابن الحاجب الحاجب % وأين ينجو مني الهارب % 2(@)(@@) % أبعد إحرازك أيماننا % % هاربتنا واعتذر الحاجب % 3(@)(@@) % يا واقبا بالأمس في بيته % ما وقب المخراق يا واقب % 4(@)(@@) % يا عجبا إذ ذاك من حالة % دافعنا فيها هو الجاذب % 5(@)(@@) % حقا لقد أوليتنا جفوة % يمحل منها البلد العاشب % 6(@)(@@) % انظر بعين العدل تبصر بها % % أنك عن منهاجه ناكب % 7(@)(@@) % سالمت أضدادا فحاربتنا % % وذاك منك العجب العاجب % 8(@)(@@) % أحربنا حين أسغت الشجا % % وحزبنا إذ ضافك الحازب % 9(@)(@@) % هيبت لقوم شرة فاحتبوا % % ولم يهب شرتنا هائب % 10(@)(@@) % وانصاعت الدعوة تلقاءهم % % وصاب فيهم مزنها الصائب % PageV01P408 11(@)(@@) % لا بدع إن الحرب مرقوبة % والسلم لا يرقبه راقب % 12(@)(@@) % هذا على أنك ذو شيمة % يدرها الماسح لا العاصب % 13(@)(@@) % لا زلت من لا سيفه ناكل % قدما ومن لا بحره ناضب % 14(@)(@@) % يا حسرتا للسارقي يومنا % % ولم يصبهم مخلب خالب % 15(@)(@@) % ما غرهم منا ونحن الأولى % % لم ير في سلطانهم خارب % 16(@)(@@) % إن لم يقيدونا بها مثلها % % فالشعر حر إن نجوا سائب % 17(@)(@@) % بل ليت شعري عنك في أمسنا % % والظن عن غيب الفتى ثاقب % 18(@)(@@) % هل قلت أخطأتم رماياكم % لا يلتقي الشارق والغارب % 19(@)(@@) % لهفي وقد جاءتك جفالة % كل مغذ ساغب لاغب % 20(@)(@@) % ألا يلاقوك فتلقى بهم % % أكل يتامى ما لهم كاسب % PageV01P409 21(@)(@@) % من كل شحذان الحشا فهم % يأكل ما لا يحسب الحاسب % 22(@)(@@) % فكاه كالعصرين 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms90# من دهره % % كلاهما في شأنه دائب % 23(@)(@@) % ذي معدة ثعلبها لاحس % % وتارة أرنبها ضاغب % % 24(@)(@@) % تعلوه حمى شره نافض % لكن حمى هضمه صالب % 25(@)(@@) % كأنما الفروج في كفه % فريسة ضرغامها دارب % 26(@)(@@) % وإن غدا الشبوط قرنا لهم % % فخد شبوطهم التارب % % 27(@)(@@) % أقسمت لو أنك لاقيتهم % % نابك من أضراسهم نائب % 28(@)(@@) % أبشر بكر عاجل إنني % % بالثأر في أمثالها طالب % 29(@)(@@) % لا تحسبني عنك في غفلة % عودي وشيك أيها الصاحب % 30(@)(@@) % قلت لصحبي حين راوغتهم % % لا تحزنوا قد يشهد الغائب % PageV01P410 31(@)(@@) % سيصنع الله لنا في غد % إن كان أكدى يومنا الخائب % 32(@)(@@) % كروا على الشيخ بتطفيلة % عن عزمة كوكبها ثاقب % 33(@)(@@) % وإن زواه عنكم جانب % فلا يفتكم ذلك الجانب % 34(@)(@@) % جوسوا عليه الأرض واستخبروا % % حتى يروح الخبر العازب % 35(@)(@@) % لا تنجون منكم فراريجه % لا وهب المنجي لها الواهب % 36(@)(@@) % لا تفلتن منكم شبابيطه % لا أفلت الطامي ولا الراسب % 37(@)(@@) % جدوا فقد جد بكم لاعبا % وقد يجد الرجل اللاعب % 38(@)(@@) % وليكن الكر على غرة % والصيد في مأمنه سارب % 39(@)(@@) % مقالة قمت بها خاطبا % وقد يصيب الغرة الخاطب % 40(@)(@@) % فاعتزم القوم على غارة % ساند فيها الراجل الراكب % PageV01P411 41(@)(@@) % يهدي أبو عثمان كرودوسها % % هداك ذاك الطاعن الضارب % 42(@)(@@) % يرقل والراية في كفه % % قد حفها الرامح والناشب % 43(@)(@@) % والقوم لاقوك فاعدد لهم % % ما يرتضي الآكل والشارب % 44(@)(@@) % يسر فراريجك مقرونة % بها شبابيطك ياكاتب % 45(@)(@@) % تلك التي مخبرها ناعم % تلك التي منظرها شاحب % 46(@)(@@) % واذكر بقلب غير مستوهل % يعروه من ذكر القرى ناخب % 47(@)(@@) % أنك من جيران قطربل % وعندك اللقحة والحالب % 48(@)(@@) % فاسق حليب الكرم شرابه % إذ ليس من شأنهم الرائب % 49(@)(@@) % أحضرهم البكر التي ما اصطلت % % نارا فكل خاطب راغب % 50(@)(@@) % ليس التي يخطبها المتقي % % بل التي يخطبها الشاذب % PageV01P412 51(@)(@@) % تلك التي ما بايتت راهبا % إلا جفا قنديله الراهب % 52(@)(@@) % تلك التي ليس لها مشبه % في الكأس إلا الذهب الذائب % 53(@)(@@) % أو أمها الكبرى التي لم يزل % % لليل من طلعتها جائب % 54(@)(@@) % حققها بالشمس أن ربيت % في حجرها والشبه الغالب % 55(@)(@@) % فهي ابنة الكرم وما إن يرى % % إلا التي الشمس لها ناسب % 56(@)(@@) % أعجب بتلك البكر محجوبة % مكروبة يجلى بها الكارب % 57(@)(@@) % مغلوبة في الدن مسلوبة % لها انتصار غالب سالب % 58(@)(@@) % بينا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms91# ترى في الزق مسحوبة % إذ حكمت أن يسحب الساحب % 59(@)(@@) % تقتص من واترها صرعة % ليس لها باك ولا نادب % 60(@)(@@) % إلا حمام الأيك في أيكه % أو عازف للشرب أو قاصب % PageV01P413 61(@)(@@) % ذات نسيم مسكه فائح % وذات لون ورسه خاضب % 62(@)(@@) % هاتيك هاتيك على مثلها % % حام ولاب الحائم اللائب % 63(@)(@@) % والنقل والريحان من شأنهم % % فلا يعب فقدها عائب % 64(@)(@@) % ولا تنم عن نرجس مؤنس % يضحك عنه الزمن القاطب % 65(@)(@@) % ريحان روح منهب عطره % % والروح إذ ذاك هو الناهب % 66(@)(@@) % لم يلفح الصيف له صفحة % ولا سقاه عوده الشاسب % 67(@)(@@) % قد ناصب الورد فمن قوله % لا يلتقي الشيعي والناصب % 68(@)(@@) % وزخرف البيت كما زخرفت % روضة حزن جادها هاضب % 69(@)(@@) % واجلب لهم حسناء في شدوها % % لكل ما سرهم جالب % 70(@)(@@) % محسنة ليست بخطاءة % % طائرها الهادل لا الناعب % PageV01P414 71(@)(@@) % بيضاء خودا ردفها ناهد % غيداء رودا ثديها كاعب % 72(@)(@@) % مملوكة بالسيف مغصوبة % لها دلال مالك غاصب % 73(@)(@@) % تستوهب الجيد إذا أتلعت % من ظبية أفزعها طالب % 74(@)(@@) % كأن من عولج من سحرها % % زجاجة يشعبها شاعب % 75(@)(@@) % نعيم من نادمها دائم % وبرح من فارقها واصب % 76(@)(@@) % كأنها والبيت مستضحك % والعود في قبضتها صاخب % 77(@)(@@) % أدمانة تنزب في روضة % جاوبها خشف لها نازب % 78(@)(@@) % واصبب عليهم تحفا جمة % يحمى بهن الموعد الكاذب % 79(@)(@@) % ولا يكن فيما يعانى لهم % % ضيق ولا ما يخشب الخاشب % 80(@)(@@) % فما رأينا مرتعا مجدبا % إلا وفيه راتع جادب % PageV01P415 81(@)(@@) % واغرم لهم من بعد ذا كله % % ما نفل الملاح والقارب % 82(@)(@@) % وتب من الذنب الذي جئته % فقد يقال المذنب التائب % 83(@)(@@) % كيما يقولوا حين ترضيهم % يا حبذا المنهزم التائب % 84(@)(@@) % وإن رجوا أخرى فمن قولهم % % أفلح هذا الغائب الآئب % 85(@)(@@) % أعتب بيوم صالح فيهم % ليس على أمثاله عاتب % 86(@)(@@) % ولا يكن يوما إذا ما انقضى % % صيح به لا رجع الذاهب % 87(@)(@@) % إلا يكن ذاك لهم واجبا % فإن تطفيلهم واجب % 88(@)(@@) % عجل لهم ذاك ولا تهجهم % % ولا يثب منك بهم واثب % 89(@)(@@) % فليس من يأدب إخوانه % مؤدبا للقوم بل آدب % 90(@)(@@) % أخلفنا نوؤك موعده % فلا تصبنا ريحك الحاصب % PageV01P416 91(@)(@@) % حاشاك أن يلقاك مستمطر % % ومزنك الصاعق لا الصائب % 92(@)(@@) % أو فادعهم ثم اهجهم راشدا % وأنت أنت الجابر الحارب % 93(@)(@@) % كي يذكروا من 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms92# مأرب معهدا % إن غرقت في سيلها مأرب % 94(@)(@@) % دع عنك خبط الجور في أمرنا % % فقد أضاء السنن اللاحب % % 95(@)(@@) % لا تطعمنا لحمك المتقى % % فليس مما يأكل الساغب % 96(@)(@@) % وكيف أكل الناس لحم امرىء % % مقوله صمصامة قاضب % 97(@)(@@) % واعلم بأن الناس من طينة % يصدق في الثلب لها الثالب % 98(@)(@@) % لولا علاج الناس أخلاقهم % % إذا لفاح الجمأ اللازب % 99(@)(@@) % ومن غدا مثلك في مجده % % حمل ما لا يحمل الصاقب % 100(@)(@@) % فقاتل الشح بجند الندى % % ينصر عليه إلبك الآلب % % PageV01P417 101(@)(@@) % واغرم حطاما واغتنم سمعة % فالزاد ماض والثنا راتب % 102(@)(@@) % هذا مزاح يا أخي كله % لشانئيك الشجب الشاجب % 103(@)(@@) % فاستصلح المال فمن دونه % أسد عليها الأشب الآشب % 104(@)(@@) % إن الإخاء المصطفى بيننا % % ليس له من غيره شائب % 105(@)(@@) % أقسمت والحق له فضله % إذا التقى المحتج والشاغب % 106(@)(@@) % إنك مما يجتني المجتني % % ولست مما يحطب الحاطب % 107(@)(@@) % فاعمر من النعماء في دولة % منصورة ليس لها قالب % PageV01P418 البحر : - 1(@)(@@) % إذا ما كساك الله سربال صحة % ولم تخل من قوت يحل ويعذب % 2(@)(@@) % فلا تغبطن المترفين فإنهم % % على حسب ما يكسوهم الدهر يسلب % PageV01P419 البحر : - 1(@)(@@) % رأيتك شبهت الضمير وحفظه % حسائكه بالحوض في حفظه الشربا % % 2(@)(@@) % وقرضت منه أن يصادف حفظه % كحفظ حياض المورد الملح والعذبا % % 3(@)(@@) % ألا كان كالغربال ينفي زؤانه % وما كان من قصرى ويحتبس الحبا % % 4(@)(@@) % ألا كان مثل القدر تنفي غثاءها % % وتقنى عراق اللحم والمرق العذبا % % PageV01P420 البحر : - 1(@)(@@) % وقتك يد الإله أبا علي % ولا جنحت بساحتك الخطوب % 2(@)(@@) % وزحزحت المكاره عنك طرا % ونفست الشدائد والكروب % 3(@)(@@) % شركتك في البلاء المر حتى % % لكاد القلب من ألم يذوب % 4(@)(@@) % ولم أمنن بذاك وكيف مني % % على من عرفه عندي ضروب % 5(@)(@@) % ولكني شكوت إليك شكوى % % أخي كرب تضيق بها الجنوب % 6(@)(@@) % وكيف الصبر والقاضي وقيذ % % أبى لي ذلك الجزع الغلوب % 7(@)(@@) % تطرقت النوائب منه شخصا % بعيدا أن تطرقه العيوب % 8(@)(@@) % ولكن في دفاع الله كاف % وإن شبت لنائرة حروب % 9(@)(@@) % وفي المعروف واقية لشاك % وللسراء غائبة تؤوب % 10(@)(@@) % وقد يخفي ضياء الشمس دجن % تزول ولم يحن منها غروب % PageV01P421 11(@)(@@) % فقل للحاكم العدل القضايا % % فداه من يجور ومن يحوب % 12(@)(@@) % أبا إسحاق محقت الخطايا % % بما تشكو ومحصت الذنوب % 13(@)(@@) % ولقيت الإفالة 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms93# من قريب % موقى كل نائبة تنوب % 14(@)(@@) % فإنك ما اعتللت بل المعالي % % وإنك ما مرضت بل القلوب % 15(@)(@@) % وحقك أن تقال فأنت آس % له رفق إذا دميت ندوب % 16(@)(@@) % تصيب إذا حكمت وإن طلبنا % % لديك العرف كنت حيا تصوب % 17(@)(@@) % هنيئا آل حماد هنيئا % فقد زكت الشواهد والغيوب % 18(@)(@@) % متى توضع جنوبكم بشكو % فما فيكم لنازلة هيوب % 19(@)(@@) % وإن ترفع جنوبكم ببرء % فما فيكم لفاحشة ركوب % 20(@)(@@) % وليس على صريع الله بأس % إذا مهدت مصارعها الجنوب % PageV01P422 21(@)(@@) % وليس على نقيذ الله عتب % وفيه عن محارمه نكوب % 22(@)(@@) % أحبكم وأشكر أن صفوتم % علي وسائر الدنيا مشوب % 23(@)(@@) % نسيمي منكم أبدا شمال % وريحي حين أستسقي جنوب % % 24(@)(@@) % ولا يلفى بساحتكم شقي % ولا يغرى بمدحكم كذوب % PageV01P423 البحر : - 1(@)(@@) % ما أنس لا أنس هندا آخر الحقب % على اختلاف صروف الدهر والعقب % 2(@)(@@) % يوم انتحتني بسهميها مسالمة % تأتي جديداتها من أوجه اللعب % 3(@)(@@) % وعيرتني بشيب الرأس ضاحكة % من ضاحك فيه أبكاني وأضحك بي % % 4(@)(@@) % قد كنت تسقين خدي مرة وفمي % % يا هند من وشل طورا ومن ثغب % 5(@)(@@) % يعل ريقك أنيابي وآونة % يستن دمعك في خدي كالسرب % 6(@)(@@) % فالآن أهزأ بي شيبي وأوبقني % % عيبي وإن كنت لم أوبق ولم أعب % 7(@)(@@) % بالجلد أنداب دهر لست أنكرها % % وما بعرضي لعمر الله من ندب % 8(@)(@@) % يا ظبية من ظباء كان مكنسها % % في ظل ذي ثمر مني وذي هدب % 9(@)(@@) % فيئي إليك فقد هبت مصوحة % أضحى لها مجتني لهو كمحتطب % 10(@)(@@) % سن بنتني وعادت بعد تهدمني % % حتى رزحت رزوح العودذي الجلب % PageV01P424 11(@)(@@) % وأعدت الرأس لوني دهره فغدا % % قد حال عن دهمة كانت إلى شهب % 12(@)(@@) % والدهر يبلي الفتى من حيث ينشئه % حتى تكر عليه ليلة القرب % 13(@)(@@) % يغذوه في كل أني وهو يأكله % % ويحتسي نغبا منه على نغب % 14(@)(@@) % يودي بحال فحال من شبيبته % % تسرب الماء من مستأنف الكتب % 15(@)(@@) % بيناه كالأجدل الغطريف ماطله % عصراه فارتد مثل الفرخ ذي الزغب % 16(@)(@@) % أعجب بآمن دهر وهو مبترك % يعريه من ورق طورا ومن نجب % 17(@)(@@) % حسب امرىء من جنى دهر تطاوله % وإن أجم فلم ينكب ولم ينب % 18(@)(@@) % في هدنة الدهر كاف من وقائعه % والعمر أفدح مبراة من الوصب 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms94# % 19(@)(@@) % قضيت ذلك من قولي إلى فنق % تلهو بمكتحل طورا ومختضب % 20(@)(@@) % حوراء في وطف قنواه في ذلف % لفاء في هيف عجزاء في قبب % PageV01P425 21(@)(@@) % كالشمس ما سفرت والبدر ما انتقبت % ناهيك من مسفر حسنا ومنتقب % 22(@)(@@) % جاءت تدافع في وشي لها حسن % تدافع الماء في وشي من الحبب % 23(@)(@@) % فأعرضت حلوة الإعراض مرته % بزفرة كنسيم الروض ذي الربب % 24(@)(@@) % تأسى على عهدي الماضي ويذهلها % % تفوق العيش لا الأحلاب في العلب % 25(@)(@@) % يا ذا الشباب الذي أضحت مناسبه % قد بدلت فيه أنواعا من الندب % 26(@)(@@) % مهلا فقد عاد ذاك الشرخ واقتربت % % من مجتنيها الأماني كل مقترب % 27(@)(@@) % بآل وهب غدت دنيا زمانهم % منضورة وتغنت بعد منتحب % 28(@)(@@) % وعادت الأرض إذ عمت مصالحهم % % دار اصطلاح وكانت دار محترب % 29(@)(@@) % قوم يحلون من مجد ومن شرف % ومن غناء محل البيض واليلب % 30(@)(@@) % حلوا محلهما من كل جمجمة % دفعا ونفعا وإطلالا على الرتب % PageV01P426 31(@)(@@) % لا بل هم الرأس إذ حسادهم ذنب % ومن يمثل بين الرأس والذنب % % 32(@)(@@) % تالله ما انفكت الأشياء شاحبة % حتى جلوها فأضحت وضح النقب % 33(@)(@@) % بهم أطاع لنا المعروف وامتنعت % % جوانب الملك ذي الأركان والشذب % 34(@)(@@) % كم فيهم من مقيم كل ذي حدب % من الأمور برأي غير ذي حدب % 35(@)(@@) % ما زال أحمد المحمود يحمدهم % مذ بويء التاج منه خير معتصب % 36(@)(@@) % وقبل ذلك كانوا يمهدون له % % وتلكم القربة الكبرى من القرب % 37(@)(@@) % صغا إليهم وولاهم أمانته % دون الأنام فلم يرتب ولم يرب % 38(@)(@@) % ما انفك تدبيرهم يجري على مهل % % حتى غدا الصقر منصورا على الخرب % 39(@)(@@) % لو كنت تعلم ما أغنى يراعهم % أيقنت أن القنا كل على القصب % 40(@)(@@) % إن كنت أذنبت في مدحي ذوي ضعة % فمدحتي آل وهب أنصح التوب % % PageV01P427 41(@)(@@) % الحارسي الدين لا يلهو نهارهم % % عنه ولا ليلهم بالنائم الرقب % % 42(@)(@@) % الحافظي الملك والحامين حوزته % % من الأعادي ذوي الأضغان والكلب % 43(@)(@@) % الحالبي لفحات الفيء حافلة % بالرفق واليمن منهم ثرة الحلب % 44(@)(@@) % المجتني الحمد بعد الأجر غايتهم % % صون الإمام عن الآثام والسبب % 45(@)(@@) % ومن جبى المال للسلطان دونهم % % أعداه إثما وعارا لازب الجرب % 46(@)(@@) % كم نضو شكر نضوا عنه وليته % فظهره مستريح غير معتقب % 47(@)(@@) % وما شكا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms95# العسر بعد اليسر صاحبهم % % ولا تحول عن رحل إلى قتب % 48(@)(@@) % وما يربغون بالنعمى مكافأة % لكن يقضون ما للمجد من أرب % 49(@)(@@) % أقسمت حقا لئن طابت ثمارهم % لقد سرى عرقهم في أكرم الترب % 50(@)(@@) % دع من قوافيك ما يكفيك إن لها % % في مدح مولاك شوطا ملهب الخبب % PageV01P428 51(@)(@@) % يا سائلي أعرب الإحسان عن حسن % أبي محمد المحمود في النوب % 52(@)(@@) % سألت عنه رفيع الذكر قد خطبت % به النباهة قبل الشعر والخطب % 53(@)(@@) % أغنى الصباح عن المصباح بل طلعت % شمس الضحى تسلك الأسلاك في الثقب % 54(@)(@@) % هلا سألت ثناء غير مجتلب % أضحى له وفناء غير مجتنب % 55(@)(@@) % فتى إذا ما مدحناه أتيح له % % من أرضه المدح فاستغنى عن الجلب % 56(@)(@@) % معروفه في جميع الناس مقتسم % فحمده في جميع الناس لا العصب % 57(@)(@@) % خرق حوت يده ملكا فجاد به % % فأصبح الملك ملكا غير مغتصب % 58(@)(@@) % أغر أبلج يكسو نفسه حلالا % % من المحامد لا تبلى على الحقب % 59(@)(@@) % أمواله في رقاب الناس من منن % لا في الخزائن من عين ومن نشب % 60(@)(@@) % فليس يملك إلا غير منتزع % % وليس يلبس إلا غير مستلب % PageV01P429 61(@)(@@) % كذا المكارم ملك لا زوال له % % باق يدوم لباق غير منشعب % 62(@)(@@) % ذاك الذي باين الأسواء وانتسبت % إليه بيض الأيادي كل منتسب % 63(@)(@@) % كم شد للسعي في أكرومة لببا % أضحى كريما به مسترخي اللبب % 64(@)(@@) % ما انفك من سهر يخليك من سهر % كلا ولا دأب يعفيك من دأب % 65(@)(@@) % مذلل للمساعي وهو مشتمل % بالعز في ظل عيص محصد الأشب % 66(@)(@@) % قد وطأ المجد للعافي خلائقه % فللتسحبي فيها لين منسحب % 67(@)(@@) % ماض على الهول نحو المجد يطلبه % % من شأنه السربة البعدى من السرب % 68(@)(@@) % لا يتقي في جميل هول مرتكب % إذا اتقى في رغيب قبح مرتكب % 69(@)(@@) % أحمى فأرعى وآوى من يطيف به % % في حيث يأمن من خوف ومن سغب % 70(@)(@@) % فضيفه في ربيع طول مدته % % وجاره كل حين منه في رجب % PageV01P430 71(@)(@@) % الأمن والخصب للثاوي بعقوته % وقفين قد كفياه كل مضطرب % 72(@)(@@) % فليس كشحاه مطويين عن رغد % ولا جناحاه مضمومين من رتب % 73(@)(@@) % أغر يجتلب المداح نائله % وأكثر الناس مدحا غير مجتلب % 74(@)(@@) % تلقاه من نهضه للمجد 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms96# في صعد % ومن تواضعه للحق في صبب % 75(@)(@@) % كأنه وهو مسؤول وممتدح % غناه إسحاق والأوتار في صخب % 76(@)(@@) % يهتز عطفاه عند الحمد يسمعه % من هزة المجد لا من هزة الطرب % 77(@)(@@) % زول يقسم أمرا واحدا شعبا % وقادر أن يضم الأمر ذا الشعب % 78(@)(@@) % معان خيرين للرواد مكتسب % من العوارف يسديها ومكتتب % 79(@)(@@) % كالبحر منفجرا من كل منفجر % والغيث منسكبا من كل منسكب % 80(@)(@@) % جاء السوادان يمتاران فاحتقبا % % من علمه ونداه خير محتقب % PageV01P431 81(@)(@@) % يقظان ما زال تغنيه قريحته % عن التجارب يلقاهن والدرب % 82(@)(@@) % ذو لمحة تدرك العقبى إذا احتجبت % عن العقول بغيب كل محتجب % 83(@)(@@) % تغزى الخطوب إذا اشتدت معرتها % % من كيده بخميس غير ذي لجب % 84(@)(@@) % رمى من الحق أغراضا فقرطسها % % وطالما رميت قدما فلم تصب % 85(@)(@@) % بصائب من سهام الرأي أيده % بالبحث والفحص لا بالريش والعقب % 86(@)(@@) % فأي عدل وفصل في قضيته % % إذا تجاثى بنو الجلى على الركب % 87(@)(@@) % فإن عصت بدهات الرأي معضلة % أذكى لها فكرا أذكى من اللهب % 88(@)(@@) % وما الحقوق إذا استقصى بضائعة % ولا الكلام إذا أحصى بمنتهب % 89(@)(@@) % يجد جد بعيد الهم منتدب % لكل خطب جليل كل منتدب % 90(@)(@@) % ويفكه الحال بعد الحال مقتفرا % آثار من قرن السلاء بالرطب % PageV01P432 91(@)(@@) % مسدد في جوابات يجيب بها % % كأنها أبدا مأخوذة الأهب % 92(@)(@@) % فيها حلاوة ظرف غير منتحل % إلى فخامة علم غير مؤتشب % 93(@)(@@) % يزينها بإشارات ملحنة % كأنها نغم التأليف ذي النسب % 94(@)(@@) % كم موطن قد جرى فيه مجاريه % يمر فيه مرورا غير ذي نكب % 95(@)(@@) % محدثا أو مبينا عن مجمجمة % أو هازلا هزل صداف عن الحوب % 96(@)(@@) % فما تطاير كالمخلوق من شرر % % ولا تواقر كالمنحوت من خشب % 97(@)(@@) % بل ظل يوزن بالقسطاط مأخذه % مجاوزا عتبا منه إلى عتب % 98(@)(@@) % بين الخفاف وبين الطيش مجتذبا % عرا القلوب إليه كل مجتذب % 99(@)(@@) % تعضل الأرض ضيقا عن جلالته % % ويسلك الخرت عفوا لطف منسرب % 100(@)(@@) % ساه وما تتقى في الرأي سقطته % داه وما ينطوى منه على ريب % PageV01P433 101(@)(@@) % فدهيه للدواهي الربد يدمغها % % وسهوه عن عيوب الناس والغيب % 102(@)(@@) % لولا عجائب لطف الله ما نبتت % تلك الفضائل في لحم وفي عصب % 103(@)(@@) % ليبهج الدين والدنيا فإنهما % % قد أصبحا في جنابيه 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms97# بمصطحب % 104(@)(@@) % يا ابن الوزير الذي أضحت صنائعه % مقلدات رقاب العجم والعرب % 105(@)(@@) % مهما وعدت فمذكور ومحتسب % وما اصطنعت فشيء غير محتسب % 106(@)(@@) % تعطي ووجهك مبسوط يصانعنا % % كأن كفك لم تفضل ولم تهب % 107(@)(@@) % لقاء جان إلى العافين معتذر % وفعل مجن جنى أحلى من الضرب % 108(@)(@@) % يا من إذا ما سألناه استهل لنا % % وإن سكتنا تجنى علة الطلب % 109(@)(@@) % أجاد تكمين نعمى ثم أطلعها % % لنا بلا مد أعناق ولا تعب % 110(@)(@@) % كأنها نعمة الله التي خلصت % في جنة الخلد من هم ومن نصب % PageV01P434 111(@)(@@) % مبرة لطفت منه وتصفية % لمورد العرف لم نعرفهما لأب % 112(@)(@@) % أثابك الله عنا ما يثاب به % % ذو الفضل والطول والعافي عن الريب % % 113(@)(@@) % وما عجبنا وإن أصبحت تعجبنا % % أن يجتنى ذهب من معدن الذهب % % 114(@)(@@) % لكن عجبنا لعرف لا نكافئه % ونستزيدك منه أكثر العجب % 115(@)(@@) % لو فر مصطنع من عرف مصطنع % عجزا عن الشكر لم نسبق إلى الهرب % 116(@)(@@) % لكنك المرء يسدي عرفه ويرى % % ترك الحساب عليه أفضل الحسب % 117(@)(@@) % وقد كفاك ائتناف المجد سيدنا % % فلم تواكل ولم تعمل على النسب % 118(@)(@@) % لكن فعلت كآباء لكم فعل % بيض الصنائع كشافين للكرب % 119(@)(@@) % وما عدوت من الآراء أصوبها % % عند امرىء كان ذا عقل وذا أدب % 120(@)(@@) % إذا ابن قوم وإن كانوا ذوي كرم % لم يفعل الخير أمسى غير منتجب % PageV01P435 121(@)(@@) % وكل شعبة أصل مثمر عقمت % % فليس تعتد إلا أرذل الشعب % 122(@)(@@) % لذاك من قضب الرمان مكتنف % يحمى ويسقى ومنبوذ مع الحطب % 123(@)(@@) % لولا الثمار التي ترجى منافعها % % ما فضل الناس تفاحا على غرب % 124(@)(@@) % ها إن تاخطبة قام الخطيب بها % % صريحة الصدق لم تمذق ولم تشب % 125(@)(@@) % والغرس نفل ورب الغرس مفترض % فاربب غراسك تجن الشكر من كثب % 126(@)(@@) % أسديت أمرا فالحمه بلحمته % % لنا وسببت فاجدل مرة السبب % 127(@)(@@) % كلم فتى طيء فينا وسيدها % % تكليم راض مليح صفحة الغضب % 128(@)(@@) % جدا وحدا إذا ما شئت هزهما % % طباعك الحر هز العضب ذي الشطب % 129(@)(@@) % واعلم بأنك مأمول ومرتقب % فاشفع شفاعة مأمول ومرتقب % 130(@)(@@) % الله في مال قوم أنت كاسبه % % يا خير مكتسب من خير مكتسب % PageV01P436 131(@)(@@) % حافظ عليه حفاظا لا وراء له % % إلا النجاح وأنقذه من 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms98# العطب % 132(@)(@@) % لا تسلبن يد قد أملت بكم % ما أملته فلا حرمان كالسلب % 133(@)(@@) % ولو سئلنا لقلنا الفقر فاقرة % لكن أعظم منه حسرة الحرب % 134(@)(@@) % وليس يشجب جار أنت مانعه % لا زال جارك ممنوعا من الشجب % 135(@)(@@) % واسلم على الدهر في نعماء سابغة % وارجع موقى ملقى خير منقلب % 136(@)(@@) % وآنس الله نفسا أنت صاحبها % % فإنها من معاليها بمغترب % 137(@)(@@) % خذها هديا ولم أنكحكها عزبا % يا ابن الوزير وكم أنكحت من عزب % 138(@)(@@) % ما زلت تنكح من قبلي نظائرها % % وأي داع إليك المدح لم يجب % 139(@)(@@) % وما خسست الثواب المستثاب بها % % وأي مهد إليك الصدق لم يثب % 140(@)(@@) % ومن يقاتل عن العليا ليملكها % % بمثل خيمك لم يسبق إلى الغلب % PageV01P437 البحر : - 1(@)(@@) % فتحت أبواب مدح لا انغلاق لها % % من إخوة لك جاؤوا بالأعاجيب % 2(@)(@@) % فجازني بمديحي أو مديحهم % إن المسبب محقوق بتثويب % 3(@)(@@) % سبب أو افعل بل اسمح لي بجمعهما % % فعلا بفعل وتسبيبا بتسبيب % % 4(@)(@@) % يا من يقول بما فيه مقرظه % ولا يمت إليه بالأكاذيب % PageV01P438 البحر : - 1(@)(@@) % سأثلج باصطناع العرف صدري % % وأعدم كاهلي ثقل الذنوب % 2(@)(@@) % وأحسن لا بحظك بل بحظي % % وللإحسان آنس للقلوب % 3(@)(@@) % إذا ذكرت أياديها نفوس % % أفاقت من معالجة الكروب % 4(@)(@@) % وآمن ما يكون المرء يوما % إذا لبس الحذار من الخطوب % 5(@)(@@) % أمور أقبلت بعد التولي % % وشمس أشرقت بعد الغروب % 6(@)(@@) % ومن يك ذخره رمحا وسيفا % فنصر الله ذخري للحزوب % PageV01P439 البحر : - 1(@)(@@) % أبا الصقر لست أرى مهديا % لك المدح غيري إلا مثابا % % 2(@)(@@) % وقد كدت من فرط ما شفني % % جفاؤك ألا أسيغ الشرابا % % 3(@)(@@) % ولو كنت أعرف لي إسوة % صبرت وعزيت قلبا مصابا % % 4(@)(@@) % ولكن منعت الأسا مثلما % % حرمت اللهى من يديك الرغابا % % 5(@)(@@) % وكنت قليل إسا المرتجي % % إذا فاته صيب منك صابا % % 6(@)(@@) % وأين إسا من عممت الورى % % سواه بسيب يفوت السحابا % % 7(@)(@@) % فلا زلت لا يجد الحاسدو % % ن فيك سوى ذلك العاب عابا % % 8(@)(@@) % بل الله يفديك بالحاسدي % % ن من كل عاب دعاء مجابا % % 9(@)(@@) % وإن كنت حلأتني صاديا % وأوردت غيري حياضا عذابا % 10(@)(@@) % تجأجىء بالوارديها سوا % % ي ظلما وتفرغ فيها الذنابا % % PageV01P440 11(@)(@@) % وإني لأرأفهم منسما % بساق وأعفاهم عنه نابا % % 12(@)(@@) % وأغزرهم درة بعد ذا % % ك عفوا إذا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms99# الدر عاصى العصابا % % 13(@)(@@) % فما لعطاياك أضحت حمى % علي وأضحت لغيري نهابا % % 14(@)(@@) % أظنك خبرت أني امرؤ % أبر الرجال بشعري احتسابا % % 15(@)(@@) % وذلك أحسن ما في الظنون % % إذا ما أخ بأخيه استرابا % % 16(@)(@@) % ولو غيرك السائمي ما أرى % % لشعبت للظن فيه شعابا % % 17(@)(@@) % فقلت غبي كسا جهله % نواظره دون شمسي ضبابا % % 18(@)(@@) % وران على قلبه رينه % فليس يريه صوابي صوابا % % 19(@)(@@) % أذلك أو قلت كان امرأ % رأى الجود ذنبا عظيما فتابا % % 20(@)(@@) % هفا هفوة بالندى ثم قال % % أنبت إلى الله فيمن أنابا % % PageV01P441 21(@)(@@) % أذلك أو قلت بل لم يزل % أخا البخل إلا عدات كذابا % % 22(@)(@@) % يريغ ثناء بلا نائل % % يمني أماني تلفى سرابا % % 23(@)(@@) % إلى كل ذاك تميل النفو % % س أخطأ ظن بها أم أصابا % % 24(@)(@@) % ولكن تنخلت فيك الظنون % تنخلي المدح فيك اللبابا % % 25(@)(@@) % وما ظن من حسن الظن فيك % % فأنت الحقيق به لا المحابى % % 26(@)(@@) % على أنني رجل عاتب % وعتبي أهدى إليك العتابا % % 27(@)(@@) % سأبدي معاتب مكنونة % إذا هي لم تبد عادت ضبابا % % 28(@)(@@) % قبلت مديحي وأنشدته % أناسا وأمسكت عني الثوابا % % 29(@)(@@) % وفيه سرائر أفشيتهن % ن إليك وكاتمتهن الحجابا % % 30(@)(@@) % فلله أنت وما جئته % إلي لقد جئت شيئا عجابا % % PageV01P442 31(@)(@@) % أتهتك ستري عن خلتي % % وتغلق دون عطاياك بابا % % 32(@)(@@) % فلو كنت إما أنلت امرأ % وإما سترت عليه وخابا % % 33(@)(@@) % عذرت ولكن كشفت الغطا % % ء عنه ولما تنله الثوابا % % 34(@)(@@) % سوى أن خالك لي مبرق % بوارق يخطفن طرفي التهابا % % 35(@)(@@) % يشير إلي بإيماضه % % ويعمد غير جنابي مصابا % % 36(@)(@@) % وإن جنابي لو جاده % % لأزكى نباتا وأزكى ترابا % % 37(@)(@@) % جناب إذا راده رائد % % رأى المسك عند ثراه ملابا % % 38(@)(@@) % وإن جاده العرف أجنى جنى % من الشكر مستعذبا مستطابا % % 39(@)(@@) % فحتام تخطف تلك البرو % % ق طرفي ويسقين غيري الذهابا % % 40(@)(@@) % رضيت بوعدك لي نائلا % إذا شمت في أفقيك السحابا % % PageV01P443 41(@)(@@) % وما كنت بعتك ستر القنوع % % لتنقدني منه وعدا خلابا % % 42(@)(@@) % ومن باع سترا على خلة % بوعد فأخسر به حين آبا % % 43(@)(@@) % ومن عجب كدت تجني به % % علي مشيبا يعفي الشبابا % % 44(@)(@@) % دوام احتجابك عن رائدي % % ولولاي لم ير منك احتجابا % % 45(@)(@@) % وقد كان من قبل إيصاله % هداياي أدنى جليسيك قابا % % 46(@)(@@) % فأقصاه ما كان يرجو به 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms100# % % إليك دنوا ومنك اقترابا % % 47(@)(@@) % فاعجب بهاتيك من خطة % واعجب بألا تشيب الغرابا % % 48(@)(@@) % حلفت لئن أنت لم ترضني % % لتنصرفن القوافي غضابا % % PageV01P444 البحر : - 1(@)(@@) % أبا جعفر واصفح عن الفاء إنها % % تزيدك في جعر من الأف جانبا % % 2(@)(@@) % رأيتك للفعل الجميل مجانبا % فآليت لا ألقاك إلا مجانبا % % PageV01P445 البحر : - 1(@)(@@) % لي خادم لا أزال أحتسبه % يغيب حتى يرده سغبه % 2(@)(@@) % نرسله لاشتراء فاكهة % فقصرنا أن تجيئنا كتبه % 3(@)(@@) % كم قال ضيفي وقد بعثت به % % هيهات يوم الحساب منقلبه % 4(@)(@@) % وخلته قد سما إلى كرم رض % % وان لكي يجتنى له عنبه % 5(@)(@@) % وإنما زار مالكا فرأى % % زقوم صدق فظل ينتخبه % 6(@)(@@) % ثم أتاني وقد طما غضبي % % عليه والضيف قد طما غضبه % 7(@)(@@) % فقال هاكم وليس في يده % % إلا نوى كان مرة رطبه % 8(@)(@@) % أو عجم رمانة وقشرتها % % بغير ماء لقد خلا عجبه % 9(@)(@@) % ضل فما يهتدي لطيبة % كأنما مجتناه محتطبه % 10(@)(@@) % غيبته سرمد وخيبته % لا تنقضي أو يغوله عطبه % PageV01P446 11(@)(@@) % يبطىء حتى أكاد أحسبه % % صادف تيسا فظل يحتلبه % 12(@)(@@) % أو أعرض الردم دون حاجته % % أو لقي الليث هائجا كلبه % 13(@)(@@) % أو لكمت لقوة لهازمه % أو سقطت من زمانة ركبه % 14(@)(@@) % هل مشتر والسعيد بائعه % هل قابل والسعيد من يهبه % 15(@)(@@) % أساء بالمسلمين جالبه % % لا كان من جالب ولا جلبه % PageV01P447 البحر : - 1(@)(@@) % تأمل العيب عيب % ما في الذي قلت ريب % 2(@)(@@) % والشعر كالشعر فيه % % مع الشبيبة شيب % 3(@)(@@) % فليصفح الناس عنه % % فطعنهم فيه غيب % 4(@)(@@) % حتى يعيش جرير % لعيبه أو نصيب % 5(@)(@@) % كم عائب كل شيء % وكل ما فيه عيب % 6(@)(@@) % والجيب ذيل لديه % % للنوك والذيل جيب % 7(@)(@@) % إياك يا بن بويب % أن يستثار بويب % 8(@)(@@) % فإنما أنا ليث % عاد وأنت كليب % 9(@)(@@) % لا تحقرن سبيبا % كم جر سبا سبيب % 10(@)(@@) % ولا تظن بجهل % أن اللسان زبيب % PageV01P448 11(@)(@@) % قد تحسن الروم شعرا % ما أحسنته العريب % 12(@)(@@) % يا منكر المجد فيهم % % أليس منهم صهيب % PageV01P449 البحر : - 1(@)(@@) % إذا بركت في صوم لقوم % دعوت لهم بتطويل العذاب % 2(@)(@@) % وما التبريك في شهر طويل % يطاول يومه يوم الحساب % 3(@)(@@) % فليت الليل فيه كان شهرا % ومر نهاره مر السحاب % % 4(@)(@@) % فلا أهلا بمانع كل خير % وأهلا بالطعام وبالشراب % % PageV01P450 البحر : - 1(@)(@@) % لي طيلسان ليس يترك لي 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms101# % % رفوي له مالا ولا نشبا % % 2(@)(@@) % طرب تغني منه ناحية % وتشق أخرى جيبها طربا % % 3(@)(@@) % كيف السبيل إلى عمارته % وإذا عمرت خرابه خربا % % 4(@)(@@) % كان ابن حرب حين جاد به % لا شك فيه يريد بي الحربا % % PageV01P451 البحر : - 1(@)(@@) % طربت إلى ريحانة الأنف والقلب % وأعمالها بين العوازف والشرب % 2(@)(@@) % ولا عيش إلا بين أكواب قهوة % توارثها عقب من الفرس عن عقب % 3(@)(@@) % من الكمت قبل المزج صهباء بعده % سليلة جون غير كمت ولا صهب % 4(@)(@@) % سلالة كرم شارف غير أنها % % علالة عود من دنان القرى ثلب % 5(@)(@@) % تأتت أكف القاطفين قطافها % % فسالت بلا عصر ودرت بلا عصب % 6(@)(@@) % أطافت بها الأيام حتى كأنها % % حشاشة نفس شارفت منقضى نحب % 7(@)(@@) % لها منظر في العين يشهد حسنه % على مخبر يهدي السرور إلى القلب % 8(@)(@@) % ترد صفاء العيش مثل صفائها % % وتكشف عن ذي الكرب غاشية الكرب % 9(@)(@@) % جلاها من الأطباع طول ثوائها % % وإمرارها الأحقاب حقبا إلى حقب % 10(@)(@@) % فلو رفعت في رأس علياء لاهتدى % % بكوكبها السارون في الشرق والغرب % PageV01P452 11(@)(@@) % غني عن الريحان مجلس شربها % % بنشر كنشرالمسك في محتوى نهب % 12(@)(@@) % ولم تر موموقا إلى النفس مثلها % % تشم فتلقى بالعبوس وبالقطب % 13(@)(@@) % يناضل عنها الماء حين يشجها % % نفي لها مثل الدبا لج في الوثب % 14(@)(@@) % لها مكرع سهل يخبر أنها % % ذلول وفيها سورة الجامح الصعب % 15(@)(@@) % سأعصي إليها اللوم في بطن روضة % كساها الحيا نورا كأدرية العصب % 16(@)(@@) % وكم مثلها من بنت كرم جلوتها % % على كل خرق ماجد الجد من صحبي % % 17(@)(@@) % له خلق عذب المذاق ولن ترى % % مزاج كؤوس الراح كالخلق العذب % 18(@)(@@) % يسرك في السراء حلو ندامه % وأنجد في العزاء من صارم عضب % 19(@)(@@) % بمونقة الرواد حو تلاعها % % تراعي بها الأدمان آمنة السرب % 20(@)(@@) % صففنا أباريق اللجين حيالها % % فمثلن سربا مشرئبا إلى سرب % PageV01P453 21(@)(@@) % تظل ترانيها الظباء تخالها % % ظباء وتدنو فهي منا على قرب % 22(@)(@@) % إذا نحن شئنا عللتنا صوادح % من الطير جمات الأهازيج والنصب % 23(@)(@@) % فذاك نصيب السلم عندي ولم أكن % لأنسى نصيب الحرب في نوب الحرب % 24(@)(@@) % أخي دون إخواني إذا الحرب شمرت % % حسام بحديه فلول من الضرب % 25(@)(@@) % له حين يعلو قونس القرن هبة % تواصل ما بين 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms102# الذؤابة والعجب % 26(@)(@@) % إذا شيم فيه بارق الموت أو مضت % به صفحة مثل العقيقة في الجلب % 27(@)(@@) % ومطرد مثل الرشاء تهزه % % كعوب تدانت فيه مثل نوى القسب % 28(@)(@@) % عليه سنان يرعف الموت لهذم % قليل التخفي بالجوانح والجنب % 29(@)(@@) % وكل ابن ريح يسبق الطرف معجه % % تطوحه عطوى منوعا لدى الجدب % 30(@)(@@) % صنيع مريش قوم القين متنه % % فجاء كما سل النخاع من الصلب % PageV01P454 31(@)(@@) % يغلغله في الدرع نصل كأنه % % لسان شجاع مخرج هم باللسب % 32(@)(@@) % وموضونة مثل الغدير حصينة % تفل شباة السيف ذي المضرب العضب % 33(@)(@@) % فذاك عتادي فوق أجرد سابح % يريح زفير الجري من منخر رحب % 34(@)(@@) % ذنوب يمس الأرض عند صيامه % % بضاف يواري فرجه سبط الهلب % 35(@)(@@) % له عند إيغال الطريدة في الوغى % % أجاري مضمون لها درك الطلب % 36(@)(@@) % يدل على صم الصفا بحوافر % % من اللائي أعطين الأمان من النكب % 37(@)(@@) % بذلك إن دارت رحى الحرب مرة % ثبت ثبات القطب في مركز القطب % 38(@)(@@) % إذا أخرت سرج الجبان وجدتني % % أغامسها في حومة الطعن والضرب % 39(@)(@@) % متى يلقني قرني فإن قصاره % على ضربة أو طعنة ثرة الشخب % 40(@)(@@) % وإني لذو حلم وشغب وراءه % % فحلم لذي حلم وشغب لذي شغب % PageV01P455 41(@)(@@) % وإني لنحار لدى الأزب لا يني % % قراي من الكوم المقاصيد كالهضب % 42(@)(@@) % إذا حاردت خور العشار حلبتها % % دماء وقدما كان ذلك من حلبي % % 43(@)(@@) % وقد يرجع الوجناء سيري وعينها % % مهوكة مثل الصبابة في الوقب % 44(@)(@@) % طويت حشاها طية البرد بعدما % % طويت بها سهبا عريضا إلى سهب % 45(@)(@@) % أنا ابن شهاب الحرب قومي ذوو العلا % % ولا فخر إن الفخر فرع من العجب % 46(@)(@@) % وكم من أب لي ماجد وابن ماجد % % له شرف يربي على الشرف المربي % % 47(@)(@@) % إذا مطرت كفاه بالبذل نورت % له الأرض واهتزت رباها من الخصب % 48(@)(@@) % وإن حاول الأعداء يوما بكيده % % أحل بمن عاداه راغية السقب % 49(@)(@@) % وحر من الفتيان ليس بقعدد % ولا قائل من فعل مكرمة حسبي % % 50(@)(@@) % أخي ثقة لو أصبح الناس كلهم % % علي معا حزبا لأصبح من حزبي % % PageV01P456 51(@)(@@) % أنوء به فيما عرا وأعده % لسانا وسيفا في الخطاب وفي الخطب % 52(@)(@@) % أبحت حمى قلبي له دون غيره % % وأنزلته في السهل منه وفي الرحب 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms103# % 53(@)(@@) % إذا اشترك الوراد في الشرب أخلصت % له النفس ودا غير مشترك الشرب % 54(@)(@@) % وقد حاول الواشون إفساد بيننا % % فأعيى على ذي المكر منهم وذي الإرب % 55(@)(@@) % سوى أنهم قد آذنونا بجفوة % أدالت رضانا ما حيينا من التعب % 56(@)(@@) % وشوا فعرفنا للتجافي مرارة % وهبنا لها مهما أتيناه من ذنب % 57(@)(@@) % فعدنا وأصبحنا بحيث يسرنا % % من الوصل والواشون في مزجر الكلب % PageV01P457 البحر : - 1(@)(@@) % أصبحت شيخا له سمت وأبهة % يدعونني البيض عما تارة وأبا % % 2(@)(@@) % وتلك دعوة إجلال وتكرمة % وددت أني معتاض بها لقبا % % PageV01P458 البحر : - 1(@)(@@) % للموز إحسان بلا ذنوب % ليس بمعدود ولا محسوب % 2(@)(@@) % يكاد من موقعه المحبوب % يدفعه البلع إلى القلوب % PageV01P459 البحر : - 1(@)(@@) % وهب يا واهب الهبات اللواتي % % قصرت دونها الهبات الرغاب % 2(@)(@@) % هب لراجيك ما عليه فإن اس % مك وهب ووسمك الوهاب % % 3(@)(@@) % أنت بحر ومن له تجتبي الأم % % وال بحر لجانبيه عباب % % 4(@)(@@) % فارغبا عن مداد شعبي فليست % % فيه إلا صبابة بل سراب % 5(@)(@@) % وارثيا لامرىء ألح عليه % % للزمان الصؤول ظفر وناب % 6(@)(@@) % سلبته الخطوب ما في يديه % % وله من تجمل أثواب % 7(@)(@@) % وإذا الصبر والتجمل داما % % للفتى الحر هانت الأسلاب % 8(@)(@@) % إن بحرا يمد بحرا بشعب % فيه أدنى صبابة لعجاب % 9(@)(@@) % فلك الحجة الصحيحة إن قل % % ت كذا تحلب البحور الشعاب % 10(@)(@@) % ومن المرة الضعيفة فالمر % رة تلوى فتحكم الأسباب % PageV01P460 11(@)(@@) % غير أن ليس في خراجي وحدي % % ما بإغلاقه يسوغ الشراب % 12(@)(@@) % لك في مكثري الرعية دوني % % حلب كيف شئت بل أحلاب % 13(@)(@@) % ومتى رام رائم كخصوصي % % قلت ما كل دعوة تستجاب % 14(@)(@@) % بل لقوم وسائل يستحقو % % ن إذا ما دعوا بها أن يجابوا % % 15(@)(@@) % ومفاتيح للخصوص وكانت % % بالمفاتيح تفتح الأبواب % 16(@)(@@) % منهم معشر ومنهم أناس % فضلتهم بفضلها الألباب % 17(@)(@@) % وأديب له ثناء بما يس % دى إليه وللثناء ثواب % 18(@)(@@) % ولبعض الرجال فضل على بع % % ض بما نفلتهم الآداب % 19(@)(@@) % ولقد جاء في الرواية والآ % % ثار أنا على العقول نثاب % 20(@)(@@) % وأحاشيك أن أفهمك الحج % جة أنى يفهم الكتاب % PageV01P461 21(@)(@@) % سيما الكاتب المبر على النا % % س بما لا يعده الحساب % 22(@)(@@) % لا تحلني على سواك فما أص % % بح للطالبين غيرك باب % 23(@)(@@) % أنت في العدل بالمكارم أولى % % من ولاة 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms104# دعاتهم لا تجاب % 24(@)(@@) % يقصد القاصدون منهم لئاما % ما لهم من وجوههم حجاب % 25(@)(@@) % مستهينين للهجاء فما من % % هم له خائف ولا هياب % 26(@)(@@) % كلهم حين يسأل العرض الأد % % نى جمود البنان لا يستذاب % 27(@)(@@) % يتلقى مسائل الناس منه % عرض سالم وعرض مصاب % 28(@)(@@) % مستخفين بالمديح وهل كا % % نت تثيب العبادة الأنصاب % 29(@)(@@) % لهف نفسي إن اجتبيت خراجي % % وحوته عفاتك الخياب % 30(@)(@@) % أنا جار قريب دار وتجبي % % ني ويجبيك نازح منتاب % PageV01P462 31(@)(@@) % ألشكر فعندي الشكر والحم % % د الذي لم يزل له خطاب % 32(@)(@@) % لا تضعني فإن شكري كنز % يتهادى تراثه الأعقاب % 33(@)(@@) % واستجد اليد التي سلفت من % % ك على أنها فتاة كعاب % 34(@)(@@) % لك عندي صنيعة ما سقاها % % غير وسميك القديم سحاب % 35(@)(@@) % فاسقها من وليك الجود واربب % ها تهدل لها ثمار عذاب % 36(@)(@@) % وهي الشكر والمحامد تنثو % % ها أقاويلي الرصان الصياب % 37(@)(@@) % مدح من بنات فكري أبكا % % ر حسان كواعب أتراب % PageV01P463 البحر : - 1(@)(@@) % أتاني مقال من أخ فاغتفرته % وإن كان فيما دونه وجه معتب % 2(@)(@@) % وذكرت نفسي منه عند امتعاضها % % محاسن تعفو الذنب عن كل مذنب % % 3(@)(@@) % ومثلي رأى الحسنى بعين جلية % وأغضى عن العوراء غير مؤنب % 4(@)(@@) % فيا هاربا من سخطنا متنصلا % هربت إلى أنجى مفر ومهرب % 5(@)(@@) % فعذرك مبسوط لدينا مقدم % وودك مقبول بأهل ومرحب % 6(@)(@@) % ولو بلغتني عنك أذني أقمتها % % لدي مقام الكاشح المتكذب % 7(@)(@@) % ولست بتقليب اللسان مصارما % خليلي إذا ما القلب لم يتقلب % PageV01P464 البحر : - 1(@)(@@) % دع اللوم إن اللوم عون النوائب % % ولا تتجاوز فيه حد المعاتب % 2(@)(@@) % فما كل من حط الرحال بمخفق % ولا كل من شد الرحال بكاسب % 3(@)(@@) % وفي السعي كيس والنفوس نفائس % وليس بكيس بيعها بالرغائب % 4(@)(@@) % وما زال مأمول البقاء مفضلا % على الملك والأرباح دون الحرائب % 5(@)(@@) % حضضت على حطبي لناري فلا تدع % لك الخير تحذيري شرور المحاطب % 6(@)(@@) % وأنكرت إشفاقي وليس بمانعي % % طلابي أن أبغي طلاب المكاسب % 7(@)(@@) % ومن يلق ما لاقيت في كل مجتنى % من الشوك يزهد في الثمار الأطايب % 8(@)(@@) % أذاقتني الأسفار ما كره الغنى % % إلي وأغراني برفض المطالب % 9(@)(@@) % فأصبحت في الإثراء أزهد زاهد % وإن كنت في الإثراء أرغب راغب % 10(@)(@@) % حريصا جبانا أشتهي ثم أنتهي % % بلحظي 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms105# جناب الرزق لحظ المراقب % PageV01P465 11(@)(@@) % ومن راح ذا حرص وجبن فإنه % % فقير أتاه الفقر من كل جانب % 12(@)(@@) % ولما دعاني للمثوبة سيد % % يرى المدح عارا قبل بذل المثاوب % 13(@)(@@) % تنازعني رغب ورهب كلاهما % % قوي وأعياني اطلاع المغايب % 14(@)(@@) % فقدمت رجلا رغبة في رغيبة % وأخرت رجلا رهبة للمعاطب % 15(@)(@@) % أخاف على نفسي وأرجو مفازها % % وأستار غيب الله دون العواقب % 16(@)(@@) % ألا من يريني غايتي قبل مذهبي % % ومن أين والغايات بعد المذاهب % 17(@)(@@) % ومن نكبة لاقيتها بعد نكبة % رهبت اعتساف الأرض ذات المناكب % 18(@)(@@) % وصبري على الإقتار أيسر محملا % علي من التغرير بعد التجارب % 19(@)(@@) % لقيت من البر التباريح بعدما % % لقيت من البحر ابيضاض الذوائب % 20(@)(@@) % سقيت على ري به ألف مطرة % شغفت لبغضيها بحب المجادب % PageV01P466 21(@)(@@) % ولم أسقها بل ساقها لمكيدتي % % تحامق دهر جد بي كالملاعب % 22(@)(@@) % إلى الله أشكو سخف دهري فإنه % % يعابثني مذ كنت غير مطايب % 23(@)(@@) % أبى أن يغيث الأرض حتى إذا ارتمت % برحلي أتاها بالغيوث السواكب % % 24(@)(@@) % سقى الأرض من أجلي فأضحت مزلة % تمايل صاحيها تمايل شارب % 25(@)(@@) % لتعويق سيري أو دحوض مطيتي % % وإخصاب مزور عن المجد ناكب % 26(@)(@@) % فملت إلى خان مرث بناؤه % % مميل غريق الثوب لهفان لاغب % 27(@)(@@) % فلم ألق فيه م ستراحا لمتعب % % ولا نزلا أيان ذاك لساغب % 28(@)(@@) % فما زلت في خوف وجوع ووحشة % وفي سهر يستغرق الليل واصب % 29(@)(@@) % يؤرقني سقف كأني تحته % % من الوكف تحت المدجنات الهواضب % 30(@)(@@) % تراه إذا ما الطين أثقل متنه % تصر نواحيه صرير الجنادب % PageV01P467 31(@)(@@) % وكم خان سفر خان فانقض فوقهم % % كما انقض صقر الدجن فوق الأرانب % 32(@)(@@) % ولم أنس ما لاقيت أيام صحوه % من الصر فيه والثلوج الأشاهب % 33(@)(@@) % وما زال ضاحي البر يضرب أهله % بسوطي عذاب جامد بعد ذائب % % 34(@)(@@) % فإن فاته قطر وثلج فإنه % % رهين بساف تارة أو بحاصب % 35(@)(@@) % فذاك بلاء البر عندي شاتيا % وكم لي من صيف به ذي مثالب % 36(@)(@@) % ألا رب نار بالفضاء اصطليتها % % من الضح يودي لفحها بالحواجب % 37(@)(@@) % م % % ولا تتجاوز فيه حد المعاتب % 38(@)(@@) % فما كل من حط الرحال بمخفق % ولا كل من شد الرحال بكاسب % 39(@)(@@) % وفي السعي كيس والنفوس نفائس % وليس بكيس بيعها بالرغائب 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms106# % 40(@)(@@) % وما زال مأمول البقاء مفضلا % على الملك والأرباح دون الحرائب % PageV01P468 41(@)(@@) % حضضت على حطبي لناري فلا تدع % لك الخير تحذيري شرور المحاطب % 42(@)(@@) % وأنكرت إشفاقي وليس بمانعي % % طلابي أن أبغي طلاب المكاسب % 43(@)(@@) % ومن يلق ما لاقيت في كل مجتنى % من الشوك يزهد في الثمار الأطايب % 44(@)(@@) % أذاقتني الأسفار ما كره الغنى % % إلي وأغراني برفض المطالب % 45(@)(@@) % فأصبحت في الإثراء أزهد زاهد % وإن كنت في الإثراء أرغب راغب % 46(@)(@@) % حريصا جبانا أشتهي ثم أنتهي % % بلحظي جناب الرزق لحظ المراقب % 47(@)(@@) % ومن راح ذا حرص وجبن فإنه % % فقير أتاه الفقر من كل جانب % 48(@)(@@) % ولما دعاني للمثوبة سيد % % يرى المدح عارا قبل بذل المثاوب % 49(@)(@@) % تنازعني رغب ورهب كلاهما % % قوي وأعياني اطلاع المغايب % 50(@)(@@) % فقدمت رجلا رغبة في رغيبة % وأخرت رجلا رهبة للمعاطب % PageV01P469 51(@)(@@) % أخاف على نفسي وأرجو مفازها % % وأستار غيب الله دون العواقب % 52(@)(@@) % ألا من يريني غايتي قبل مذهبي % % ومن أين والغايات بعد المذاهب % 53(@)(@@) % ومن نكبة لاقيتها بعد نكبة % رهبت اعتساف الأرض ذات المناكب % 54(@)(@@) % وصبري على الإقتار أيسر محملا % علي من التعرير بعد التجارب % 55(@)(@@) % لقيت من البر التباريح بعدما % % لقيت من البحر ابيضاض الذوائب % 56(@)(@@) % سقيت على ري به ألف مطرة % شغفت لبغضيها بحب المجادب % 57(@)(@@) % ولم أسقها بل ساقها لمكيدتي % % تحامق دهر جد بي كالملاعب % 58(@)(@@) % إلى الله أشكو سخف دهري فإنه % % يعابثني مذ كنت غير مطايب % 59(@)(@@) % أبى أن يغيث الأرض حتى إذا ارتمت % برحلي أتاها بالغيوث السواكب % % 60(@)(@@) % سقى الأرض من أجلي فأضحت مزلة % تمايل صاحيها تمايل شارب % PageV01P470 61(@)(@@) % لتعويق سيري أو دحوض مطيتي % % وإخصاب مزور عن المجد ناكب % 62(@)(@@) % فملت إلى خان مرث بناؤه % % مميل غريق الثوب لهفان لاغب % 63(@)(@@) % فلم ألق فيه م ستراحا لمتعب % % ولا نزلا أيان ذاك لساغب % 64(@)(@@) % فما زلت في خوف وجوع ووحشة % وفي سهر يستغرق الليل واصب % 65(@)(@@) % يؤرقني سقف كأني تحته % % من الوكف تحت المدجنات الهواضب % 66(@)(@@) % تراه إذا ما الطين أثقل متنه % تصر نواحيه صرير الجنادب % 67(@)(@@) % وكم خان سفر خان فانقض فوقهم % % كما انقض صقر الدجن فوق الأرانب % 68(@)(@@) % ولم أنس ما لاقيت أيام صحوه % من الصر فيه والثلوج الأشاهب % 69(@)(@@) % وما 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms107# زال ضاحي البر يضرب أهله % بسوطي عذاب جامد بعد ذائب % % 70(@)(@@) % فإن فاته قطر وثلج فإنه % % رهين بساف تارة أو بحاصب % PageV01P471 71(@)(@@) % فذاك بلاء البر عندي شاتيا % وكم لي من صيف به ذي مثالب % 72(@)(@@) % ألا رب نار بالفضاء اصطليتها % % من الضح يودي لفحها بالحواجبه % % 73(@)(@@) % إذا ظلت البيداء تطفو إكامها % % وترسب في غمر من الآل ناضب % 74(@)(@@) % فدع عنك ذكر البر إني رأيته % لمن خاف هول البحر شر المهاوب % 75(@)(@@) % كلا نزليه صيفه وشتاؤه % خلاف لما أهواه غير مصاقب % 76(@)(@@) % لهاث مميت تحت بيضاء سخنة % وري مفيت تحت أسحم صائب % 77(@)(@@) % يجف إذا ما أصبح الريق عاصبا % ويغدق لي والريق ليس بعاصب % 78(@)(@@) % ويمنع مني الماء واللوح جاهد % ويغرقني والري رطب المحالب % % 79(@)(@@) % وما زال يبغيني الحتوف مواربا % يحوم على قتلي وغير موارب % 80(@)(@@) % فطورا يغاديني بلص مصلت دع اللوم إن اللوم عون النوائب % % ولا تتجاوز فيه حد المعاتب % PageV01P472 81(@)(@@) % فما كل من حط الرحال بمخفق % ولا كل من شد الرحال بكاسب % 82(@)(@@) % وفي السعي كيس والنفوس نفائس % وليس بكيس بيعها بالرغائب % 83(@)(@@) % وما زال مأمول البقاء مفضلا % على الملك والأرباح دون الحرائب % 84(@)(@@) % حضضت على حطبي لناري فلا تدع % لك الخير تحذيري شرور المحاطب % 85(@)(@@) % وأنكرت إشفاقي وليس بمانعي % % طلابي أن أبغي طلاب المكاسب % 86(@)(@@) % ومن يلق ما لاقيت في كل مجتنى % من الشوك يزهد في الثمار الأطايب % 87(@)(@@) % أذاقتني الأسفار ما كره الغنى % % إلي وأغراني برفض المطالب % 88(@)(@@) % فأصبحت في الإثراء أزهد زاهد % وإن كنت في الإثراء أرغب راغب % 89(@)(@@) % حريصا جبانا أشتهي ثم أنتهي % % بلحظي جناب الرزق لحظ المراقب % 90(@)(@@) % ومن راح ذا حرص وجبن فإنه % % فقير أتاه الفقر من كل جانب % PageV01P473 91(@)(@@) % ولما دعاني للمثوبة سيد % % يرى المدح عارا قبل بذل المثاوب % 92(@)(@@) % تنازعني رغب ورهب كلاهما % % قوي وأعياني اطلاع المغايب % 93(@)(@@) % فقدمت رجلا رغبة في رغيبة % وأخرت رجلا رهبة للمعاطب % 94(@)(@@) % أخاف على نفسي وأرجو مفازها % % وأستار غيب الله دون العواقب % 95(@)(@@) % ألا من يريني غايتي قبل مذهبي % % ومن أين والغايات بعد المذاهب % 96(@)(@@) % ومن نكبة لاقيتها بعد نكبة % رهبت اعتساف الأرض ذات المناكب % 97(@)(@@) % وصبري على الإقتار أيسر محملا % علي من 
