urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms801# ليل دامس قنديلا % % PageV01P3509 71(@)(@@) % لكن بأن خالوا بدرا باهرا % وإذا أخال شبيه شيء خيلا % % 72(@)(@@) % ماقدر ليل أن تكون لبسته % فاختين نورك تحته واغتيلا % % 73(@)(@@) % أنى تجلك الدجى بأبدرها % % لن تستطيع لك الدجى تجليلا % % 74(@)(@@) % ولما خفيت بأن نشرك لم ينل % أقصى مدى نشر ونيف ميلا % % 75(@)(@@) % لكن بأن حسبوه ريا روضة % هبت لها ريح الشمال بليلا % % 76(@)(@@) % والله ثبطهم بذاك فكذبوا % % فيك اليقين وصدقوا التخبيلا % % 77(@)(@@) % كم ليلة نسي الصباح مساؤها % % قد بت فيها بالسهاد كحيلا % % 78(@)(@@) % مانمت نوم غريرة في خدرها % % لكن سريت سرى الرجال رجيلا % % 79(@)(@@) % ولعمر جمع الزنج يوم لقيتهم % % ماصادفوك يراعة إجفيلا % % 80(@)(@@) % شهدت بذلك في جبينك ضربة % كانت على صدق اللقاء دليلا % % PageV01P3510 81(@)(@@) % تركت بوجهك للحفيظة ميسما % مارجعت ورق الحمام هديلا % % 82(@)(@@) % من بعد ما غادرتهم وكأنما % % قعرت بهم عصف الرياح نخيلا % % 83(@)(@@) % مازلت تنكؤهم بحد شائك % لم تألهم قرحا ولاتقتيلا % % 84(@)(@@) % تقريهم طعنا أبج وتارة % ضربا يزيل بينهم تزييلا % % 85(@)(@@) % حتى إذا ألب الجميع وأللوا % % تلقاء نحرك حدهم تأليلا % % 86(@)(@@) % أسروك إذ كثروك لالعزيمة % فشلت عليك ولالصبر عيلا % % 87(@)(@@) % لكن رموك بدهمهم وكأنهم % % جيش أجاب دعاء إسرافيلا % % 88(@)(@@) % فانقدت طوع الحزم لامستقتلا % خرقا ولاسلس القياد ذليلا % % 89(@)(@@) % ورأيت أن تبقى لهم فتكيدهمم مااستشرفت منك العيون ضئيلا % % لكن عظيما في الصدور جليلا % % 90(@)(@@) % أقبلت في خلع الولاية طالعا % والناس حولك يوفضون قبيلا % % PageV01P3511 91(@)(@@) % فكأنك البدر المنير مكللا % من طالعات سعوده إكليلا % % 92(@)(@@) % كم من غليل يوم ذلك هجته % لازلت في صدر الحسود غليلا % % 93(@)(@@) % من كان حمله لبوس ولا ية % وأعازه التعظيم والتبجيلا % % 94(@)(@@) % فبذات نفسك مايكون جمالها % % وبمائه كان الحسام صقيلا % % 95(@)(@@) % تبا لمن تعمي بصيرة رأيه % حتى يراك بما سواك نبيلا % % 96(@)(@@) % إني لأكبر أن أراك مهنأ % إلا بما يتجاوز التأميلا % % 97(@)(@@) % لأحق منك بأن يهنأ معشر % رزقوك حظا في الحظوظ جزيلا % % 98(@)(@@) % أنصفتهم وأقمت عدلك فيهم % ميزان قسط لا يميل مميلا % % 99(@)(@@) % فهدت عيونهم وأفرخ روعهم % % وأقام منهم من أراد رحيلا % % 100(@)(@@) % من بعد ماسأل الحميم حميمه % مابال دفك بالفراش مذيلا % % PageV01P3512 101(@)(@@) % لايعدموك فقد نصحت إمامهم % % ووضعت إصرهم وكان ثقيلا % % 102(@)(@@) % أرفقتهم في خرجهم ووفرتهم % % وكذا المدر يقدم التحفيلا % % 103(@)(@@) % فتنافسوا بك في العمارة 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms802# بعدما % % طال العداء فعطلت تعطيلا % % 104(@)(@@) % فقضاك ريع العدل ماأعطيتهم % % أوفى قضاء واصطنعت جميلا % % 105(@)(@@) % والعدل مغزرة لكل حلوبة % والجور يعقب رسلها تشويلا % % 106(@)(@@) % لم لاتكون لدى إمامك مرتضى % لاينبغي بك في الكفاة بديلا % % 107(@)(@@) % وإذا وليت فليس يعدم قائلا % ماكان رأي إمامنا ليفيلا % % 108(@)(@@) % تجبي له مال البلاد وحمدها % % إذ لاتضيع من الحقوق فتيلا % % 109(@)(@@) % قال الإمام وقد جمعتهما له % % حظان مثلهما بمثلك نيلا % % 110(@)(@@) % أنت الذي يمري اللقاح برفقه % ملء الوطاب ولا يجيع فصيلا % % PageV01P3513 111(@)(@@) % أسمعته شكر الرعية بعدما % % جار الولاة فأسمعوه عويلا % % 112(@)(@@) % كسبت له التجوير قبلك عصبة % فكسبت بعدهم له التعديلا % % 113(@)(@@) % ولقد قطعت إليه كل حبالة % % لايستطيع لها الدهاة حويلا % % 114(@)(@@) % ولقد ركبت إليه كل مخوفة % لو زل راكبها لطاح قتيلا % % 115(@)(@@) % ووهبت نفسك للمتالف دونه % ورأيت ذلك في الإمام قليلا % % 116(@)(@@) % شهد الخليفة والرعية أنه % % ماكان جولكم عند ذلك مهيلا % % 117(@)(@@) % شهد الخليفة والرعية أنه % % ماكان رأيك عند ذاك سحيلا % % 118(@)(@@) % أنت الذي قطع الحبائل بعدما % % أزمت أزام وعضلت تعضيلا % % 119(@)(@@) % فنجوت من أيدي الأخابث سالما % ورهنتهم لهفا عليك طويلا % % 120(@)(@@) % ولئن نجوت لقد ركبت عزيمة % حذاء تسبق داعرا وجديلا % % PageV01P3514 121(@)(@@) % وأجلت رأيا أحوذيا مثله % فيما ينوب من الخطوب أجيلا % % 122(@)(@@) % ولقل ماينجو امرؤ من مثلها % % بالرأي إلا أن يكون أصيلا % % 123(@)(@@) % دبرت تدبير المدبر إنه % % ماكان عند مضلة ضليلا % % 124(@)(@@) % بل كنت للملك السعيد وديعة % أمر الإله بحفظها جبريلا % % 125(@)(@@) % بل ذا وذاك وإن وهبت لأمة % تعفو فضولكوأصيلا % % 126(@)(@@) % ولقد بلاك الطالبون فثبطوا % % أن يدركوك وخذلوا تخذيلا % % 127(@)(@@) % ورأوا مكانك ريثما أخليته % كمكان بعض الراسيات أزيلا % % 128(@)(@@) % فسروا على حرد إليك وأعملوا % % طلبا يحث به الرعيل رعيلا % % 129(@)(@@) % فسترت دونهم بستر كثافة % حتى خفيت وما خفيت ضئيلا % % 130(@)(@@) % فثنوا أعنة راجعين بخيبة % كرجوعهم أيام ساقوا الفيلا % % PageV01P3515 131(@)(@@) % ولعلهم لو أدركوك لأرسلت % طير العذاب عليهم السجيلا % % 132(@)(@@) % ولما خفيت بأن وجهك لم يكن % % في كل ليل دامس قنديلا % % 133(@)(@@) % لكن بأن خالوا بدرا باهرا % وإذا أخال شبيه شيء خيلا % % 134(@)(@@) % ماقدر ليل أن تكون لبسته % فاختين نورك تحته واغتيلا % % 135(@)(@@) % أنى تجلك الدجى بأبدرها % % لن تستطيع لك الدجى تجليلا % % 136(@)(@@) % ولما خفيت بأن نشرك لم ينل % أقصى 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms803# مدى نشر ونيف ميلا % % 137(@)(@@) % لكن بأن حسبوه ريا روضة % هبت لها ريح الشمال بليلا % % 138(@)(@@) % والله ثبطهم بذاك فكذبوا % % فيك اليقين وصدقوا التخبيلا % % 139(@)(@@) % كم ليلة نسي الصباح مساؤها % % قد بت فيها بالسهاد كحيلا % % 140(@)(@@) % مانمت نوم غريرة في خدرها % % لكن سريت سرى الرجال رجيلا % % PageV01P3516 141(@)(@@) % ولعمر جمع الزنج يوم لقيتهم % % ماصادفوك يراعة إجفيلا % % 142(@)(@@) % شهدت بذلك في جبينك ضربة % كانت على صدق اللقاء دليلا % % 143(@)(@@) % تركت بوجهك للحفيظة ميسما % مارجعت ورق الحمام هديلا % % 144(@)(@@) % من بعد ما غادرتهم وكأنما % % قعرت بهم عصف الرياح نخيلا % % 145(@)(@@) % مازلت تنكؤهم بحد شائك % لم تألهم قرحا ولاتقتيلا % % 146(@)(@@) % تقريهم طعنا أبج وتارة % ضربا يزيل بينهم تزييلا % % 147(@)(@@) % حتى إذا ألب الجميع وأللوا % % تلقاء نحرك حدهم تأليلا % % 148(@)(@@) % أسروك إذ كثروك لالعزيمة % فشلت عليك ولالصبر عيلا % % 149(@)(@@) % لكن رموك بدهمهم وكأنهم % % جيش أجاب دعاء إسرافيلا % % 150(@)(@@) % فانقدت طوع الحزم لامستقتلا % خرقا ولاسلس القياد ذليلا % % PageV01P3517 151(@)(@@) % ورأيت أن تبقى لهم فتكيدهمه % % أجدى ومثلك أحسن التمييلا % % 152(@)(@@) % وقتال من لاتستطيع قتاله % في الناس يكسب رأيك التفييلا % % 153(@)(@@) % ومن اتقى التحيين فيما يتقي % % فكذاك أيضا يتقي التجهيلا % % 154(@)(@@) % بل أعجلوك عن المراس كأنهم % % عنف من السيل استخف حميلا % % 155(@)(@@) % لافل حدك من حسام صارم % ترك القراع بحده تفليلا % % 156(@)(@@) % لو حكت في السيف الذي كافحته % ماحاك فيك لأسرع التهليلا % % 157(@)(@@) % لو مسه الألم الذي أحذاكه % % أو دون ذاك لما استفاق صليلا % % 158(@)(@@) % أو فل فيه حر وجهك فلة % في حر وجهك ريع منه وهيلا % % 159(@)(@@) % لله نفس يوم ذاك أذلتها % % ولرب شيء صين حين أذيلا % % 160(@)(@@) % لوقفتها نصب الكريهة موقفا % ماكان تعذيرا ولاتحليلا % % PageV01P3518 161(@)(@@) % لاجاهلا قدر الحياة مغمرا % بل عارفا قدر الحياة بسيلا % % 162(@)(@@) % مثل الهزبر المستميت إذا ارتدى % % أشباله من خلفه والغيلا % % 163(@)(@@) % والحرب تغلى بالكماة قدورها % % والموت يأكل ماطهته نشيلا % % 164(@)(@@) % تخذوا الحديد مغافرا وأشلة % وتخذت صبرك مغفرا وشليلا % % 165(@)(@@) % نفس طلبت بها العلا فبلغتها % % وركبت منها كاهلا وتليلا % % 166(@)(@@) % وإذا أذلت النفس في طلب العلا % % فلتلفين لما ملكت مذيلا % % 167(@)(@@) % أتراك بعد النفس تبخل باللهى % % الله جارك أن تكون بخيلا % % 168(@)(@@) % ما كنت تمضي باللقاء مصمما % فتكون في شيء س واه كليلا % % 169(@)(@@) % من جاد بالحوباء 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms804# جاد بماله % فالمال أيسر هالك تعجيلا % % 170(@)(@@) % ونظرت مابخل امرىء وسماحه % والرأي يوجد أهله التأويلا % % PageV01P3519 171(@)(@@) % فالبخل جبن والسماح شجاعة % لاشك حين تصحح التحصيلا مص مااستشرفت منك العيون ضئيلا % % 172(@)(@@) % لكن عظيما في الصدور جليلا % % أقبلت في خلع الولاية طالعا % 173(@)(@@) % والناس حولك يوفضون قبيلا % % فكأنك البدر المنير مكللا % 174(@)(@@) % من طالعات سعوده إكليلا % % كم من غليل يوم ذلك هجته % 175(@)(@@) % لازلت في صدر الحسود غليلا % % من كان حمله لبوس ولا ية % 176(@)(@@) % وأعازه التعظيم والتبجيلا % % فبذات نفسك مايكون جمالها % % 177(@)(@@) % وبمائه كان الحسام صقيلا % % تبا لمن تعمي بصيرة رأيه % 178(@)(@@) % حتى يراك بما سواك نبيلا % % إني لأكبر أن أراك مهنأ % 179(@)(@@) % إلا بما يتجاوز التأميلا % % لأحق منك بأن يهنأ معشر % 180(@)(@@) % رزقوك حظا في الحظوظ جزيلا % % أنصفتهم وأقمت عدلك فيهم % PageV01P3520 181(@)(@@) % ميزان قسط لا يميل مميلا % % فهدت عيونهم وأفرخ روعهم % % 182(@)(@@) % وأقام منهم من أراد رحيلا % % من بعد ماسأل الحميم حميمه % 183(@)(@@) % مابال دفك بالفراش مذيلا % % لايعدموك فقد نصحت إمامهم % % 184(@)(@@) % ووضعت إصرهم وكان ثقيلا % % أرفقتهم في خرجهم ووفرتهم % % 185(@)(@@) % وكذا المدر يقدم التحفيلا % % فتنافسوا بك في العمارة بعدما % % 186(@)(@@) % طال العداء فعطلت تعطيلا % % فقضاك ريع العدل ماأعطيتهم % % 187(@)(@@) % أوفى قضاء واصطنعت جميلا % % والعدل مغزرة لكل حلوبة % 188(@)(@@) % والجور يعقب رسلها تشويلا % % لم لاتكون لدى إمامك مرتضى % 189(@)(@@) % لاينبغي بك في الكفاة بديلا % % وإذا وليت فليس يعدم قائلا % 190(@)(@@) % ماكان رأي إمامنا ليفيلا % % تجبي له مال البلاد وحمدها % % PageV01P3521 191(@)(@@) % إذ لاتضيع من الحقوق فتيلا % % قال الإمام وقد جمعتهما له % % 192(@)(@@) % حظان مثلهما بمثلك نيلا % % أنت الذي يمري اللقاح برفقه % 193(@)(@@) % ملء الوطاب ولا يجيع فصيلا % % أسمعته شكر الرعية بعدما % % 194(@)(@@) % جار الولاة فأسمعوه عويلا % % كسبت له التجوير قبلك عصبة % 195(@)(@@) % فكسبت بعدهم له التعديلا % % ولقد قطعت إليه كل حبالة % % 196(@)(@@) % لايستطيع لها الدهاة حويلا % % ولقد ركبت إليه كل مخوفة % 197(@)(@@) % لو زل راكبها لطاح قتيلا % % ووهبت نفسك للمتالف دونه % 198(@)(@@) % ورأيت ذلك في الإمام قليلا % % شهد الخليفة والرعية أنه % % 199(@)(@@) % ماكان جولكم عند ذلك مهيلا % % شهد الخليفة والرعية أنه % % 200(@)(@@) % ماكان رأيك عند ذاك سحيلا % % أنت الذي قطع الحبائل بعدما % % PageV01P3522 201(@)(@@) % أزمت أزام وعضلت تعضيلا % % فنجوت من أيدي الأخابث سالما % 202(@)(@@) % ورهنتهم 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms805# لهفا عليك طويلا % % ولئن نجوت لقد ركبت عزيمة % 203(@)(@@) % حذاء تسبق داعرا وجديلا % % وأجلت رأيا أحوذيا مثله % 204(@)(@@) % فيما ينوب من الخطوب أجيلا % % ولقل ماينجو امرؤ من مثلها % % 205(@)(@@) % بالرأي إلا أن يكون أصيلا % % دبرت تدبير المدبر إنه % % 206(@)(@@) % ماكان عند مضلة ضليلا % % بل كنت للملك السعيد وديعة % 207(@)(@@) % أمر الإله بحفظها جبريلا % % بل ذا وذاك وإن وهبت لأمة % 208(@)(@@) % تعفو فضولكوأصيلا % % ولقد بلاك الطالبون فثبطوا % % 209(@)(@@) % أن يدركوك وخذلوا تخذيلا % % ورأوا مكانك ريثما أخليته % 210(@)(@@) % كمكان بعض الراسيات أزيلا % % فسروا على حرد إليك وأعملوا % % PageV01P3523 211(@)(@@) % طلبا يحث به الرعيل رعيلا % % فسترت دونهم بستر كثافة % 212(@)(@@) % حتى خفيت وما خفيت ضئيلا % % فثنوا أعنة راجعين بخيبة % 213(@)(@@) % كرجوعهم أيام ساقوا الفيلا % % ولعلهم لو أدركوك لأرسلت % 214(@)(@@) % طير العذاب عليهم السجيلا % % ولما خفيت بأن وجهك لم يكن % % 215(@)(@@) % في كل ليل دامس قنديلا % % لكن بأن خالوا بدرا باهرا % 216(@)(@@) % وإذا أخال شبيه شيء خيلا % % ماقدر ليل أن تكون لبسته % 217(@)(@@) % فاختين نورك تحته واغتيلا % % أنى تجلك الدجى بأبدرها % % 218(@)(@@) % لن تستطيع لك الدجى تجليلا % % ولما خفيت بأن نشرك لم ينل % 219(@)(@@) % أقصى مدى نشر ونيف ميلا % % لكن بأن حسبوه ريا روضة % 220(@)(@@) % هبت لها ريح الشمال بليلا % % والله ثبطهم بذاك فكذبوا % % PageV01P3524 221(@)(@@) % فيك اليقين وصدقوا التخبيلا % % كم ليلة نسي الصباح مساؤها % % 222(@)(@@) % قد بت فيها بالسهاد كحيلا % % مانمت نوم غريرة في خدرها % % 223(@)(@@) % لكن سريت سرى الرجال رجيلا % % ولعمر جمع الزنج يوم لقيتهم % % 224(@)(@@) % ماصادفوك يراعة إجفيلا % % شهدت بذلك في جبينك ضربة % 225(@)(@@) % كانت على صدق اللقاء دليلا % % تركت بوجهك للحفيظة ميسما % 226(@)(@@) % مارجعت ورق الحمام هديلا % % من بعد ما غادرتهم وكأنما % % 227(@)(@@) % قعرت بهم عصف الرياح نخيلا % % مازلت تنكؤهم بحد شائك % 228(@)(@@) % لم تألهم قرحا ولاتقتيلا % % تقريهم طعنا أبج وتارة % 229(@)(@@) % ضربا يزيل بينهم تزييلا % % حتى إذا ألب الجميع وأللوا % % 230(@)(@@) % تلقاء نحرك حدهم تأليلا % % أسروك إذ كثروك لالعزيمة % PageV01P3525 231(@)(@@) % فشلت عليك ولالصبر عيلا % % لكن رموك بدهمهم وكأنهم % % 232(@)(@@) % جيش أجاب دعاء إسرافيلا % % فانقدت طوع الحزم لامستقتلا % 233(@)(@@) % خرقا ولاسلس القياد ذليلا % % ورأيت أن تبقى لهم فتكيدهم % % 234(@)(@@) % أجدى ومثلك أحسن التمييلا % % وقتال من لاتستطيع قتاله % 235(@)(@@) % في الناس يكسب رأيك التفييلا % % ومن اتقى 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms806# التحيين فيما يتقي % % 236(@)(@@) % فكذاك أيضا يتقي التجهيلا % % بل أعجلوك عن المراس كأنهم % % 237(@)(@@) % عنف من السيل استخف حميلا % % لافل حدك من حسام صارم % 238(@)(@@) % ترك القراع بحده تفليلا % % لو حكت في السيف الذي كافحته % 239(@)(@@) % ماحاك فيك لأسرع التهليلا % % لو مسه الألم الذي أحذاكه % % 240(@)(@@) % أو دون ذاك لما استفاق صليلا % % أو فل فيه حر وجهك فلة % PageV01P3526 241(@)(@@) % في حر وجهك ريع منه وهيلا % % لله نفس يوم ذاك أذلتها % % 242(@)(@@) % ولرب شيء صين حين أذيلا % % لوقفتها نصب الكريهة موقفا % 243(@)(@@) % ماكان تعذيرا ولاتحليلا % % لاجاهلا قدر الحياة مغمرا % 244(@)(@@) % بل عارفا قدر الحياة بسيلا % % مثل الهزبر المستميت إذا ارتدى % % 245(@)(@@) % أشباله من خلفه والغيلا % % والحرب تغلى بالكماة قدورها % % 246(@)(@@) % والموت يأكل ماطهته نشيلا % % تخذوا الحديد مغافرا وأشلة % 247(@)(@@) % وتخذت صبرك مغفرا وشليلا % % نفس طلبت بها العلا فبلغتها % % 248(@)(@@) % وركبت منها كاهلا وتليلا % % وإذا أذلت النفس في طلب العلا % % 249(@)(@@) % فلتلفين لما ملكت مذيلا % % أتراك بعد النفس تبخل باللهى % % 250(@)(@@) % الله جارك أن تكون بخيلا % % ما كنت تمضي باللقاء مصمما % PageV01P3527 251(@)(@@) % فتكون في شيء س واه كليلا % % من جاد بالحوباء جاد بماله % 252(@)(@@) % فالمال أيسر هالك تعجيلا % % ونظرت مابخل امرىء وسماحه % 253(@)(@@) % والرأي يوجد أهله التأويلا % % فالبخل جبن والسماح شجاعة % 254(@)(@@) % لاشك حين تصحح التحصيلاه % % جبن البخيل من الزمان وصرفه % 255(@)(@@) % فتهيب الإفضال والتنويلا % % واستشعرت نفس الجواد شجاعة % 256(@)(@@) % فرجا الزمان على الزمان مديلا % % وإذا امرؤ منح الشجاعة لم يجد % 257(@)(@@) % عنه السماح لرحله تحويلا % % ولقل ماجاد امرؤ ليست له % % 258(@)(@@) % نفس ترى حد الزمان فليلا % % ليشمر الغادي إليك ذيوله % % 259(@)(@@) % كيما يروح مرفلا ترفيلا % % فلرب تشمير إليك رأيته % 260(@)(@@) % بالأمس أعقب أهله تذييلا % % جعل البخيل لما يفيد قرارة % PageV01P3528 261(@)(@@) % لكن جعلت لما تفيد مسيلا % % صرفت يداك إلى المكارم والعلا % % 262(@)(@@) % عن مالك التثمير والتأثيلا % % شذبت في دار الفناء أثيله % 263(@)(@@) % ليكون في دار البقاء أثيلا % % ماسولت نفس لصاحبها الغنى % % 264(@)(@@) % إلا انبريت تصدق التسويلا % % تعد المنى عنك الغنى فتفي به % % 265(@)(@@) % وتقيم جودك بالوفاء كفيلا % % وتفي بما يعد الكذوب كأنما % % 266(@)(@@) % كفلت ذلك دونه تكفيلا % % ولو استطعت إذا وفيت بوعده % 267(@)(@@) % نفلته حسن الثنا تنفيلا % % ولرب مرجو سواك مؤمل % 268(@)(@@) % ألفاه راجيه عليك 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms807# محيلا % % فقبلت منه حوالة مكروهة % 269(@)(@@) % ورأيتها حظا إليك أميلا % % ونقدت صاحبها الثواب معجلا % 270(@)(@@) % إذا ما سألت بنقده تأجيلا % % يفديك من تفدي بمالك عرضه % PageV01P3529 271(@)(@@) % وتذود عنه الذم والتبخيلا % % لولاك أصبح عرض كل مبخل % 272(@)(@@) % شلوا يمزقه الهجاء أكيلا % % الناس أدهم أنت فيه غرة % 273(@)(@@) % جعل الأفاضل تحتها تحجيلا % % لو كنت في عصر النبي محمد % 274(@)(@@) % أوحى الإله بمدحك التنزيلا % % شاركت إبراهيم في اسم واحد % 275(@)(@@) % ونسخته شبها كإسماعيلا % % لم يبق إبراهيم إرث خليفة % 276(@)(@@) % إلا وقد قبلتها تقبيلا % % ولئن تقدمك الخليل بزلفة % 277(@)(@@) % لبمثل ماتسديه كان خليلا % % تقواك تقواه وبرك بره % 278(@)(@@) % لله دركما أبا وسليلا % % ولقد دعوت الله مثل دعائه % 279(@)(@@) % عند البلاء فزل عنك زليلا % % يفتن فيك المادحون وكلهم % % 280(@)(@@) % يتجنب التشبيه والتمثيلا % % فت العديل فما يقال كأنه % % PageV01P3530 281(@)(@@) % من ذا رأى لك في الأنام عديلا % % هذا أبا إسحاق موقف عائذ % 282(@)(@@) % بك من نوائب لم يدعن ثميلا % % يتواعد الأيام منك بجحفل % 283(@)(@@) % ينفي الأوابد هدة وصهيلا % % شئز المقيل بحيث عبدك ضاحيا % 284(@)(@@) % فامهد لعبدك في ذراك مقيلا % % وأفىء عليه الظل بعد زواله % % 285(@)(@@) % لازال ظلك ماحييت ظليلا % % يامن عليه عيال آدم بعده % 286(@)(@@) % أكفل أخاك وإن غدوت معيلا % % يامن تكفل للعباد برزقهم % % 287(@)(@@) % أتخالني فيمن كفلت دخيلا % % سويت بين الخلق إلا واحدا % 288(@)(@@) % قد كان يأمل عندك التفضيلا % % لاتقسم الضيزى كقسمة معشر % 289(@)(@@) % نصبوا موازين الفواضل ميلا % % صن عرض عبدك أن يذال فإنه % % 290(@)(@@) % ماكان قط لبذلة منديلا % % صن وجه عبدك عن سؤال معاشر % PageV01P3531 291(@)(@@) % ألفاهم شر البرية حيلا % % من مانع مرعى وآخر باذل % 292(@)(@@) % مرعى توخمه الكرام وبيلا % % إن من منن فاستمر مريره % 293(@)(@@) % من منة فعلت ومن قيلا % % فكأن مايسديه شهد معجب % 294(@)(@@) % فيه الذعاف مثملا تثميلا % % أصبحت أرجو منك عاجل نائل % 295(@)(@@) % مازال مرجوا لديك منيلا % % وكأنني بي شاكر لك قائل % 296(@)(@@) % لاقيت خير منفل تنفيلا % % لاقيت من لاقى الزمان تحاميا % 297(@)(@@) % عني فنكل صرفه تنكيلا % % وأقال جدي بعد طول عثاره % 298(@)(@@) % لازلت للجد العثور مقيلا % % لاقيت إبراهيم واحد عصره % % 299(@)(@@) % وكفى به من جملة تفصيلا % % لاقيت من ألوى بنحسي سعده % 300(@)(@@) % لازال سعدا للنحوس مزيلا % % قالت لحراماني سماحة كفه % PageV01P3532 301(@)(@@) % لن تستطيع لسنتي تبديلا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms808# % % صدقت منى نفسي لديه عداتها % % 302(@)(@@) % ولقد عهدت عداتها تعليلا % % وارتشت ريش غنى أطار جديده % % 303(@)(@@) % مارث من حالي فطار نسيلا % % أنت الذي ماقيل حين مدحته % 304(@)(@@) % خاطبت رسما بالفلاة محيلا % % بل قيل لي لافال رأيك مادحا % 305(@)(@@) % أملت مأمولا وشمت مخيلا % % أصبحت بين خصاصة وتجمل % 306(@)(@@) % والمرء بينهما يموت هزيلا % % فامدد إلي يدا تعود بطنها % % 307(@)(@@) % بذل النوال وظهرها التقبيلا % % ووسيلتي أني قصدتك لاأرى % % 308(@)(@@) % إلا عليك لحاجتي تعويلا % % وأجبت من قال اتصل بوصيلة % 309(@)(@@) % حسبي بسؤدد من مدحت وصيلا % % مافي خلائق من مدحت نقيصة % 310(@)(@@) % أبغي لها بوسيلة تكميلا % % جعل الرشاء لمن طوالة شربه % PageV01P3533 311(@)(@@) % لا لامرىء مثلي يؤم النيلا % % ساحت موارده فليس رشاؤه % 312(@)(@@) % إلا شرائع سهلت تسهيلا % % علام تقتسم الوسائل بينهم % % 313(@)(@@) % حمدي فيذهب جله تضليلا % % لاأشرك الشركاء في حمد امرىء % % 314(@)(@@) % منه أؤمل وحده التمويلا % % أنى أخول من سواه محامدي % % 315(@)(@@) % وهو الذي أرجو به التحويلا % % وكلت مجدك باقتضائك حاجتي % % 316(@)(@@) % وكفى به متقاضيا ووكيلا % % إني رأيتك جنة عدنية % 317(@)(@@) % قد هدلت ثمراتها تهديلا % % حملت فذللت الغصون بحملها % % 318(@)(@@) % وكفت أكف جناتها التذليلا % % أحسنت فيك الظن وهي وسيلة % 319(@)(@@) % شفعت إن أحسنت فيك القيلا % % ولو التقيت وحاتما لحسبته % 320(@)(@@) % أعداه جودك أن عراك نزيلا % % فقد اكتنفت بكل أمر لاترى % % PageV01P3534 321(@)(@@) % معه إلى بخس الجزاء سبيلا % % خذها أبا إسحاق صنعة شاعر % 322(@)(@@) % صنع أطال لفكره التمهيلا % % وأطاعه حرف الروي فلم يجىء % 323(@)(@@) % فيه بمفعول يشوب فعيلا % % كثرت معاني المدح فيك فهيأت % 324(@)(@@) % للمادح التكثير والتطويلا % % فأطلت إيفاء لمجدك حقه % 325(@)(@@) % بل لست فيك وإن أطلتمطيلا % % ولما جعلتك إذ أطلت كمورد % 326(@)(@@) % قذف أمر رشاؤه فأطيلا % % ن % PageV01P3535 البحر : - 1(@)(@@) % تطول ياقريع بني فراس % فإنك من ذوي الأيدي الطوال % % 2(@)(@@) % وكل يد أطال الحظ منها % % بلا طول مقصرة المنال % 3(@)(@@) % وما يبقى على الحدثان شيء % سوى شرف من الأفعال عالي % % 4(@)(@@) % هي الدنيا تزول بساكنيها % % فأفضلها البعيد من الزوال % 5(@)(@@) % وقد مكنت من درج وثاق % فلا تجبن من الرتب العوالي % % 6(@)(@@) % واعدد سحنة للحظ ليست % لعمرو إنه مني ببال % 7(@)(@@) % فإن الحظ لاشركاء فيه % % وليس بمؤنس حظ مخالي % % 8(@)(@@) % لكا لمرعى الخصيب بلا سوام % أو البلد الرحيب بلا حلال % 9(@)(@@) % فلا تأنس 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms809# أبا حسن بحظ % ومعمره من الأخيار خالي % % 10(@)(@@) % ألا يوما إلى مثلي مذالا % بكم في حشوة السقط المذال % PageV01P3536 11(@)(@@) % وقد حظيت بحظكم رزايا % % يطأطىء ذكرها صيد القذال % 12(@)(@@) % كعمرو أو كأنداد لعمرو % ألا يا قوم للكفر الجلال % % 13(@)(@@) % أتشحن روضة عرضت وطالت % بأشباه النعام أو الرئال % 14(@)(@@) % دعوتك خاضعا من تحت تحت % فلا تشمخ فتدعى من معال % 15(@)(@@) % وينصرني عليك الناس نصرا % يطول به على الطاغي دلالي % % 16(@)(@@) % وقبلك مانصرت على ظلوم % وما أعملت أطراف الإلال % 17(@)(@@) % ولكني أويت من اعتصامي % % إلى عيطاء شاهقة القلال % 18(@)(@@) % وتلك أعز لي من كل رمح % وصمصام إذا دعيت نزال % 19(@)(@@) % وكم عز الذليل بلا قتال % وكم ذل العزيز مع القتال % 20(@)(@@) % حلفت برأي سيدنا المصفى % % إذا فالاه غامضة مفالي % % PageV01P3537 21(@)(@@) % ونقصي بعد رجحاني لديه % % وقد يئس الموازن من عدالي % % 22(@)(@@) % لقد أوقعت من أمرين أمرا % أتى منه فسادي أو خبالي % % 23(@)(@@) % فإما أن تكون ثللت عرشي % % وإما أن تكون أهلت جالي % % 24(@)(@@) % أتلتمس الشفاء لديك حالي % % فتمنى منك بالداء العضال % % 25(@)(@@) % مطال منك قد أضنى اصطباري % % وظلم منك قد أفنى احتيالي % % 26(@)(@@) % وكان مطال مدحي بالمساعي % % هداك الله أحسن من مطالي % % 27(@)(@@) % فماطلني الجزاء تؤل بمدحي % % من الأمد البعيد إلى مآل % % 28(@)(@@) % حلفت لقد حكمت بغير عدل % أمنت وأنت تشغلني اشتغالي % % 29(@)(@@) % لحيت لي الزمان وأنت عطل % وضافرت الزمان وأنت والي % % 30(@)(@@) % وكيف ولم أمنت عليك عتبي % % وسيلي بالأوابد وانثيالي % % PageV01P3538 31(@)(@@) % أكنت ظننت سهوي عن حقوقي % % أم استيقنت جبني وانخذالي % % 32(@)(@@) % أم استعهدت حلمي واغتفاري % % أم استكفيت حزمي في حوالي % % 33(@)(@@) % كلا الحسبين يوجب أن يضاهى % % فساجلني فإنك ذو سجال % % 34(@)(@@) % أخفت عواقب السوء فخفها % % فكل إساءة مجنى وبال % % 35(@)(@@) % أم استعليت عن إتيان سوء % فكن في ذاك فوقي أوحيالي % % 36(@)(@@) % كلا الأمرين من كرم وحزم % فإنك فيه ذو عم وخال % 37(@)(@@) % وعظتك أيها الإنسان وعظي % % فلا أك واعظ الدمن الخوالي % % 38(@)(@@) % وأنت الحي كل الحي فاترك % غروب الوعي للرمم البوالي % % 39(@)(@@) % ورج تغافلي لك وانخداعي % % ولاترج اختداعي واغتفالي % % 40(@)(@@) % تواردنا ونحن على وداد % فلا نصدر ونحن على تقالي % % PageV01P3539 41(@)(@@) % فلست بمن يعلل بالهواهي % % ولست بمن يفزع بالسعالي % % 42(@)(@@) % وسعت الناس إنصافا وبرا % وإفضالا فهم لك 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms810# كالعيال % 43(@)(@@) % سواي فإنني أوسعت خسفا % بلا جرم وأعجبك احتمالي % % 44(@)(@@) % على أني أعادي من تعادي % % كما أني أوالي من توالي % % 45(@)(@@) % بلى ذنبي ولست أتوب منه % % ولو أني قليت على المقالي % % 46(@)(@@) % لسان بالثناء عليك رطب % وقلب من مديحك في مجال % % 47(@)(@@) % أعد نظرات أبا حسن فإني % % أراك وهمت في أمري وحالي % % 48(@)(@@) % ولا والله ماتسوى أمور % تراها قيمتي أبدا قبالي % % 49(@)(@@) % أزور فلا أرى منك اهتشاشا % كما أني أغيب فلا تبالي % % 50(@)(@@) % وقد يؤتى هجور من سلو % كما يؤتى زؤور من ملال % PageV01P3540 51(@)(@@) % ولم أكثر فأوجب عذر قال % ولم أهجر فأوجب عذر سالي % % 52(@)(@@) % فما بال الجفاء جفاء سال % وما بال اللقاء لقاء قالي % % 53(@)(@@) % لقد أشجيتني بالظلم حتى % % جعلت تعجبني جل اشتغالي % % 54(@)(@@) % وكم أرضيت من قوم وقوم % خدودهم تسافل عن نعالي % % 55(@)(@@) % أبيت فصالهم من بعد ري % وما أرويتني وترى فصالي % % 56(@)(@@) % بخست وفضلوا حتى كأني % % حبيت بنقصهم وحبوا كمالي % % 57(@)(@@) % على أني أحاول بعض حقي % % وأيسر ماأسد به اختلالي % % 58(@)(@@) % أراك إن اعتزلتك ذات يوم % أبا حسن سيوحشك اعتزالي % % 59(@)(@@) % فكيف إن ارتحلت إلى بلاد % تباعد عنك تصبرلارتحالي % % 60(@)(@@) % أليس من الشدائد أن تراني % % على ودي وقد شدت رحالي % % PageV01P3541 61(@)(@@) % بل وكفتك وحشتنا جميعا % إذا بكرت لطيتها جمالي % % 62(@)(@@) % ولكن قد وثقت بصدق ودي % % وآمنك اختبارك من زيالي % % 63(@)(@@) % ولم لا واعتقادك في فؤادي % % مساكن مهجتي أخرى الليالي % % 64(@)(@@) % هويتك ناشئا قبل التلاقي % % هوى حدثا تكهل باكتهالي % % 65(@)(@@) % ولم يك للرواء هواي لكن % لمحمود الشمائل والخصال % 66(@)(@@) % وكل مودة قبل اختيار % فتلك هوى طباع لاانتحال % % 67(@)(@@) % رأت مافيك نفسي رأي حدس % فلم يخطىء سدادي واعتدالي % % 68(@)(@@) % فلما أن لقيتك واعترفنا % % جلا عني ظلام الليل جالي % % 69(@)(@@) % وقال الرأي لي قولا فصيحا % وقعت على الهدى بعد الضلال % 70(@)(@@) % فكيف أميل بين هوى ورأي % % إلى صرم وقد شد اعتقالي % % PageV01P3542 71(@)(@@) % لقد حرسا وصالك من ملالي % % وصرمي شئت صرمي أو وصالي % % 72(@)(@@) % فلو بودلت بالدنيا جميعا % علقتك وانحرفت عن البدال % % 73(@)(@@) % ولايظلمك من قبل التلاقي % % هوى سبق اختياري وانتحالي % % 74(@)(@@) % ولاحاباك بعد الخبر رأي % رأى فضل اليمين على الشمال % 75(@)(@@) % وكم أصبحت معتلا عليه % % فجادل عنك أنواع الجدال % 76(@)(@@) % وأيسر حجة للرأي 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms811# مما % % تكامل فيك يعصف باعتلالي % % 77(@)(@@) % ومثلك يا أبا حسن حقيق % بصوني عن فراقك واعتقالي % % 78(@)(@@) % لشكر محبتي قبل التلاقي % % وشكم مودتي بعد التبالي % % 79(@)(@@) % أعيذك أن يرى مثلي عدو % لديك بحال مطرح مذال % 80(@)(@@) % فيوسع رأيك المحمود ذما % ويطعن في اختيارك غير آلي % % PageV01P3543 81(@)(@@) % وهب أني عدمت الفضل طرا % سوى علمي بفضلك في الرجال % 82(@)(@@) % أما في ذاك عندك مايعفي % % عل مابعد ذلك من خلالي % % 83(@)(@@) % كفافي يا أبا حسن يسير % وشكري ذو المثاقيل الثقال % 84(@)(@@) % وكم شيء له بذر يسير % وريع مثل أطواد الجبال % 85(@)(@@) % أنا السيف المجرد في الأعادي % % أبا حسن فلا تغفل صقالي % % 86(@)(@@) % أترضى أن تقلدني حساما % وبي طبع وجفني غير حالي % % 87(@)(@@) % معاذ الله أن ترضى بهذا % % وأنت بحيث أنت من المعالي % % 88(@)(@@) % فجدد لي الصقال وحل جفني % % يكن لك يوم تلبسني جمالي % % 89(@)(@@) % وصني يوم سلمك إن صوني % % يسرك يوم حربك بابتذالي % % 90(@)(@@) % ألم تعلم هداك الله أني % % أبر على المناضل والمغالي % % PageV01P3544 91(@)(@@) % متى حققت لم أقعد بحقي % % وإن جادلت لم يخش انجدالي % % 92(@)(@@) % رويدك إنني كاسيك بردا % جديدا من قريض غير بالي % % 93(@)(@@) % تنافسه مسامع سامعيه % % ويطوى منشديه على اختيال % 94(@)(@@) % مديحا إن تثبه يكن مديحا % من الحلل المحبرة الغوالي % % 95(@)(@@) % وإن تظلمه تجعله هجاء % % أشد على الكريم من النبال % 96(@)(@@) % وليس بلفظة لي فيك لكن % بما للناس من قيل وقال % 97(@)(@@) % يرون مدائحا جزيت بظلم % % فألسنهم أحد من النصال % 98(@)(@@) % وكم من ناصر لي لم أرده % يماحل ظالمي عني محالي % % 99(@)(@@) % وأعوان الضعيف أولو احتشاد % لنصرته وعنه ذو نضال % % 100(@)(@@) % وكم شعر مدحت به ظلوما % فصار هجاءه لا بافتعالي % % PageV01P3545 101(@)(@@) % ولو أني أشاء سكت عنه % % مجاهرة ودب له اغتيالي % % 102(@)(@@) % ولكن المحق له نصير % من الأيام والعقب المتالي % % 103(@)(@@) % وذم الناس مجلوب رخيص % لأيسر علة والحمد غالي % % 104(@)(@@) % وأهل الظرف منصورون قدما % لهم من كل طائفة موالي % % 105(@)(@@) % فلا تبعث عليك لسان حفل % وحفل بعد حفل واحتفال % 106(@)(@@) % أقاسي ساهرا إذا لا تقاسي % % رياضتي القريض ولاارتجالي % % 107(@)(@@) % وأركب أخمصي إذ لاتراعي % % حفاي كيف كان ولاانتعالي % % 108(@)(@@) % سأدعو الله مبتهلا إليه % % عليك مع الدعاة على الإلال % 109(@)(@@) % وإن لم يبتهل جهرا لساني % % عليك فنيتي لك 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms812# بابتهال % 110(@)(@@) % وظلت لما غاص في بحرها % % آمل أن يرجع تأميلا % % PageV01P3546 110(@)(@@) % لم يملأ الآفاق لكنه % % قد دوخ الآفاق تجويلا % % 110(@)(@@) % يا طالب التفضيل في شنطف % حسبك بالجملة تفصيلا % % 110(@)(@@) % قالت صغير كاس في فعله % % فلم أحاول عنه تحويلا % % 110(@)(@@) % ولم يغص في بحركم قامة % حتى أراه عزرائيلا % % 110(@)(@@) % قلت وما تهوين من عاجز % لم يمش من صحرائكم ميلا % % 110(@)(@@) % بكت على أيري بعين استها % % حتى لقد بلت مناديلا % % 110(@)(@@) % حتى إذا صادمت خرطومها % % باليأس تنزيلا وتأويلا % % 110(@)(@@) % ثم تخلصت ففاصلتها % % فصلها الجزار تفصيلا % % 110(@)(@@) % واستدخلت إيري فعودته % % برب أن يرجع تأميلا % % 110(@)(@@) % حلت سراويلي على واسع % ما خلته إلا سراويلا % PageV01P3547 110(@)(@@) % وقلت لما حاولت رجعتي % % لساء تسويلك تسويلا % % 110(@)(@@) % أقسمت لو ألبسته جمة % يوسعها كفك ترجيلا % % 110(@)(@@) % هل يخجل التسفيل من كله % % يصلح للتسفيل تسفيلا % % 110(@)(@@) % من نتن حشيها وتشويهها % % ومن لظى تبا وتضليلا % 110(@)(@@) % تسفيلنا أملح من وجهها % % فما تبالي القال والقتيلا % % 110(@)(@@) % لا تعذلوا بظراء زمردة % تضحى لها الأيدي خلاخيلا % % 110(@)(@@) % فانصرفت مكروبة شنطف % تساجل الدمع المثاكيلا % % 110(@)(@@) % عذرت ذاك الوجه أنه % يصلح للرأس منديلا % % 110(@)(@@) % ثم تحملت وكللته % % من فاخر الدر أكاليلا % % 110(@)(@@) % صادم حافات حري كلها % % مكلل الرأس ثآليلا % % PageV01P3548 110(@)(@@) % ولست والله تذوقينه % % إلا إذا هومت تخييلا % % 110(@)(@@) % من اغتدى بعدك يخشى لظى % % لم يعتقد في الله تعديلا % % 110(@)(@@) % ولست أخشى النار لظى % % لم يعتقد في الله تعديلا % % 110(@)(@@) % وكل من ظنك محظورة % معتقد في الله تبخيلا % % 110(@)(@@) % أنت حلال غير محجوزة . % حسبي بتشويهك تحليلا % % 110(@)(@@) % فعد ونكني الآن قلت اغربي % % لا أشتهي العمش المهازيلا % % 110(@)(@@) % ما ذقته عودا ولو سبلت % % وقوفه في الفسق تسبيلا % % 110(@)(@@) % قد عذب الله امرءا ناكها % % طورين تعجيلا وتأجيلا % 110(@)(@@) % احللت تنكيلي بباب استها % % فكان للتنكيل تنكيلا % % 110(@)(@@) % أما يرعى جلال الحق حر سريعإذا تغنت شنطف مرةفاصفح ودع عنك الأباطيلاضرابة بالطبل ضراطة تجيب بالتطبيل تطبيلا بذيءلها ضراط ريحه عاصف تطفىء بالليل القاناديلا بذيءمسمومة الريق إذا قبلتصحفت التقبيل تقبيلاقبلها جلمود عرادة يحسن لل % % وإن حجدت بصيرته جلالي % % PageV01P3549 110(@)(@@) % إذا تغنت شنطف مرة % فاصفح ودع عنك الأباطيلا % % 110(@)(@@) % ضرابة بالطبل ضراطة % تجيب بالتطبيل تطبيلا % 110(@)(@@) % لها ضراط ريحه عاصف % تطفىء بالليل القاناديلا % % 110(@)(@@) % مسمومة الريق إذا قبلت 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms813# % % صحفت التقبيل تقبيلا % % 110(@)(@@) % قبلها جلمود عرادة % يحسن للبخراء تقبيلا % % 110(@)(@@) % فاحشة النقصان لكنها % % قدكملت بالبظر تفضيلا % % 110(@)(@@) % أزري بها الله فلم يعطها % % إلا بطول البظر تفضيلا % % 110(@)(@@) % إذا بدا الفيل وخرطومه % % قلنا أعارت بظرها الفيلا % % 110(@)(@@) % غول يبيت الشرب من قبحها % % خولت الأهواء تخويلا % % 110(@)(@@) % عطلت الأرباب لا قدست % وما ترى للأير تعطيلا % % PageV01P3550 110(@)(@@) % ما أحسن الأرقم طوقا لها % % وأحسن الأسود إكليلا % 110(@)(@@) % لكنها مرت على سمعها % % قصة هابيل وقابيلا % % 110(@)(@@) % لا تعبد الله ولكنها % % تعبد بالليل الغراميلا % % 110(@)(@@) % من رتل الآية ألفيتها % % ترتل الشهقة ترتيلا % 110(@)(@@) % في وجهها سميا وفي ساقها % % من فعلها تلك الأفاعيلا % % 110(@)(@@) % واضحة الأثرين من طول ما % % تناك إبراكا وتجديلا % 110(@)(@@) % افادها تبراكها غرة % وبذلها الرجلين تحجيلا % 110(@)(@@) % والله ما أدري إذا كرعت % أأحسنت أم أقبحت قيلا % % 110(@)(@@) % في سكرة الموت لنا مذهل % عنها وما أسرفت تمثيلا % 110(@)(@@) % إذا تغنت سطعت نكهة % تتركنا عنها مشاغيلا % % PageV01P3551 110(@)(@@) % يابسة العود وقد ذللت % قطوفها للنيك تذليلا % % 110(@)(@@) % لو رامت التوبة لم تستطيع % لسنة الشيطان تبديلا % % 110(@)(@@) % تحققت بالفسق في داره % وزادت التكريع تطفيلا % % 110(@)(@@) % ليست تواري من أخ سوءة % % طالبة إذ ذاك تنويلا % % 110(@)(@@) % لو حسنت معشار ما قبحت % خولت الأهواء تخويلا % % PageV01P3552 البحر : - 1(@)(@@) % إذا أنت أزمعت الصنيعة مرة % فلا تعتصر ماء الصنيعة بالمطل % 2(@)(@@) % ولاتخلط الحسنى بسوء فإنه % % يجشمنا أن نخلط الشكر بالعذل % 3(@)(@@) % أترضى بأن تكنى بسهل وأن ترى % % وما مطلب الحاجات عندك بالسهل % 4(@)(@@) % أنفت لعشاقالمكارم أن ترى % % مواعيدهم مثل البوارق في المحل % % 5(@)(@@) % ولاسيما بعد المشيب وبعدها % % أراهم هدي منهاجهم سرج العقل % % 6(@)(@@) % تعلم أبا سهل بأني عالم % على علم ذي علم بعلمي وذي جهل % % 7(@)(@@) % وأني أرى حسن الأمور وقبحها % % بألوي من الآراء مستحكم الجدل % 8(@)(@@) % ومما أرى أن النوال إذا أتى % % على الكره كان المنع خيرا من البذل % 9(@)(@@) % ولم لا وقد ألجأت ملتمس الجدا % % إلى الطلب المذموم والخلق والوغل % 10(@)(@@) % واعطيته المنزور بعد مطاله % % فخست منه وانتسبت إلى الفضل % PageV01P3553 11(@)(@@) % أرى الجزل من نيل الرجال هنيؤه % ومانائل جزل مع المطل بالجزل % 12(@)(@@) % وها إنني من بعدها متمثل % بوفق من الأمثال في منطق فصل % 13(@)(@@) % مطلت مطال النخل فاثبت ثباته % واجن جناه أو فدع نكد 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms814# النخل % 14(@)(@@) % ولا يك ماتجديه كالبقل خسة % وكالنخل تأخيرا فما ذاك بالعدل % % PageV01P3554 البحر : - 1(@)(@@) % سئل الأير ماتريد إلى الكع % ثب قال الدخول قيل ألا ادخل % 2(@)(@@) % قال أبغي الخروج قيل ألا فاخ % % رج فقال الخروج ماليس يسهل % 3(@)(@@) % إنما شأني التردد فيه % % داخلا خارجا أغيب وأنصل % 4(@)(@@) % شهوة القلب لبثه بين أيد % وشفائي ترددي بين أرجل % 5(@)(@@) % هم ذاك العناق والنيك همي % % وكلانا في شأنه ليس يغفل % % 6(@)(@@) % ولي الدهر طعنة ذات غور % غير أن لست حين أطعن أقتل % 7(@)(@@) % وترى لي كريمة القوم حقا % وذماما وحرمة حين أمثل % 8(@)(@@) % وعليها يخف لي لا لغيري % % كل شيء من التكاليف يثقل % 9(@)(@@) % ولهذا تجيبني حين أدعو % % غير معتاصة فأعلو وتسفل % 10(@)(@@) % كل حب تعمل وهوى الحس % % ناء إياي من خلاف التعمل % PageV01P3555 11(@)(@@) % ومتى طاوعت فذاك طباع % ومتى مانعت فذاك تدلل % 12(@)(@@) % وعليها تجمل فإذا ما % % عاينتني فما عليها تجمل % 13(@)(@@) % ولديها تبتل فإذا ما % % غاب في الخاق باق زال التبتل % % 14(@)(@@) % ولي العطر والملابس % كلهو التفتل % 15(@)(@@) % وإذا خس في المعاشر قدري % % فلديها يجل قدري وينبل % % 16(@)(@@) % وبها ترعوي حياتي إذا مت % ت وتشتد قوتي حين أذبل % % PageV01P3556 البحر : - 1(@)(@@) % وأخرق تضرمه نفحة % سفاها وتطفئه تفله % 2(@)(@@) % فأخلاقه تارة وعرة % وأخلاقه تارة سهله % % PageV01P3557 البحر : - 1(@)(@@) % بررتك بالهجران لما رأيتني % % على حسب ماتبدي أعقك بالوصل % 2(@)(@@) % ولست أبالي كيف كانت فروعنا % % إذا نحن كنا في الإخاء على أصل % % 3(@)(@@) % وإني وإن لم تأتني وحجبتني % % لأعتدك النصل المبر على النصل % 4(@)(@@) % نصرت بظهر الغيب غيبي وحطتني % % وقمت بعذري قاطعا فيه بالفصل % 5(@)(@@) % فلا زلت مستور المقاتل تعتلي % % وتحظى على الخصم المناضل بالخصل % % PageV01P3558 البحر : - 1(@)(@@) % دع الأجمال مرتجله % تخب بركبها عجله % 2(@)(@@) % وعاط أخاك عاتقة % بقار الدن مشتمله % % 3(@)(@@) % تراها حين تبذلها % % كجمر النار مشتعله % % 4(@)(@@) % إذا ما الدن أسبلها % % لنا من عينه الهمله % % 5(@)(@@) % حسبت سبائك العقبان % تجري منه منتزله % 6(@)(@@) % يطوف بكأسها رشأ % كغصن البانة الخضله % 7(@)(@@) % وما للغصن نضرته % % ولا حركاته الشكله % % 8(@)(@@) % وما للغصن مقلته % % ولا ألحاظه الثمله % % 9(@)(@@) % وما للغصن غرته % % ولا وجناته الخجله % % 10(@)(@@) % وما للغصن طرته % % ولا أصداغهالزجله % % PageV01P3559 11(@)(@@) % قوائمه بما حملت % ه من أردافه وحله % % 12(@)(@@) % إذا ما قابل الأبصا % % ر ظلت فيه 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms815# منتضله % % 13(@)(@@) % يعذب قلب من يهوا % % ه بين قطيعة وصله % % 14(@)(@@) % وتشفع ذاك مسمعة % لنا بالسحر مكتحله % % 15(@)(@@) % قد اكتهلت صناعتها % % لرود غير مكتهله % % 16(@)(@@) % تجيد الشدو موقعة % وضاربة ومرتجله % % 17(@)(@@) % إذا غنتك ذقت العي % % ش من نغماتها الصحله % % 18(@)(@@) % مخففة ولم تبلغ % مقالة قائل نحله % 19(@)(@@) % مثقلة ولم تبلغ % مقالة قائل رهله % 20(@)(@@) % ولكن بين ذلكم % % قواما فهي معتدله % % PageV01P3560 21(@)(@@) % يود الصب لو أمست % بسالفتيه منتعله % % 22(@)(@@) % محاسن كل مخلوق % لها في الحسن ممتثله % % 23(@)(@@) % كأن علي روادفها % % ستور الليل منسدله % % 24(@)(@@) % ولكن لا وفاء لها % % فنفس محبها وجله % % 25(@)(@@) % فقل لمتيم أضحت % له بالدل مختبله % % 26(@)(@@) % عليك أبا الحسين أخا % وخل الساحة الدغله % % 27(@)(@@) % فتى كملت محاسنه % فنفس خليله جذله % 28(@)(@@) % من الشعراء والعلما % % ء أهل الألسن الجدله % 29(@)(@@) % مهذبة خلائقه % بما حملت محتمله % 30(@)(@@) % فتى لا عقده واه % ولا عزماته فشله % % PageV01P3561 31(@)(@@) % نلقبه شنوفيا % برغم عداته السفله % 32(@)(@@) % شنوف من صنوف العل % م بالآذان متصلة % 33(@)(@@) % ولا يعدم أبو بكر % % يدا بثرائه مذله % % 34(@)(@@) % لعرض الجار صائنة % لعرض المال مبتذله % % 35(@)(@@) % ولا نعدم سجايا في % % ه للخيرات معتمله % % 36(@)(@@) % إذا الحرية انتقلت % فليست منه منتقله % % 37(@)(@@) % هو الجماش للعليا % % ء لا للغادة الغزله % % 38(@)(@@) % له لقب من التجمي % % ش يشبه نفسه الجذله % % 39(@)(@@) % وأخطل دهره شعرا % بغير سجية خطله % % 40(@)(@@) % وأحنف دهره حلما % بغير سريرة نغله % % PageV01P3562 41(@)(@@) % كلا هذا وذاك حيا % تبيت بروقه عمله % % 42(@)(@@) % كفى بهما إذا ظلت % ستور الليل منسدله % % 43(@)(@@) % حملت لذا وذاك يدا % قواي بحملها بعله % % 44(@)(@@) % فنفسي في مقامهما % % إلى الرحمن مبتهله % % 45(@)(@@) % بعثت قريحتي لهما % % فجاءت وهي محتفله % % PageV01P3563 البحر : - 1(@)(@@) % أبا الصقر قد أصبحت في ظل نعمة % إليها انتهى تأميل كل مؤمل % 2(@)(@@) % فدونك ظل المستديم لظلها % % وإن كنت فيه دائبا غير مؤتلي % % 3(@)(@@) % وما دعم الأقوام ظلة نعمة % بمثل محق تحتها متظلل % PageV01P3564 البحر : - 1(@)(@@) % بالجانب الشرقي شمس أشرقت % فتضاءلت شمس النهار خمولا % % 2(@)(@@) % يبدو لأبصار العيون ضياؤها % % فترى الخفي وتعرف المجهولا % % 3(@)(@@) % فإذا غدا بصر يباهر نورها % % رجعته مطروف الشعاع كليلا % % PageV01P3565 البحر : - 1(@)(@@) % أدلل على الخير تلحق شأو فاعله % % وإن قدرت فكن أدنى وسائله % % 2(@)(@@) % واعلم بأن ابتذال الوجه تخلقه % إلا ابتذالكه في نفع آمله % % 3(@)(@@) % وبذلة الوجه أحيانا تجدده % % كما تجدد 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms816# سيفا كف صاقله % % PageV01P3566 البحر : - 1(@)(@@) % يامن أغار عليه من غلائله % % ومن أرق عليه من خلاخله % 2(@)(@@) % أما تغار على ودي لصحبته % أما ترق لقلبي من بلابله % % 3(@)(@@) % ظبي يرى كل وجه من مخاتلنا % % وندريه فنعمى عن مخاتله % % 4(@)(@@) % نحتال فيه فينجو من حبائلنا % % ونحن ننشب تترى في حبائله % % 5(@)(@@) % فظ نميط الأذى عنه فيتعسنا % % وليس في السيف عفو عن صياقله % 6(@)(@@) % لاتعجبا أن دمعا فاض عن حرق % ماء أفاضته نار من مراجله % % 7(@)(@@) % أراق دمعي هوى ظبي أراق دمي % % يا للقتيل بكى من حب قاتله % % 8(@)(@@) % ما للمعنى ملقى من عواذله % % ما يستحق المعنى من عواذله % % 9(@)(@@) % إن الوزير غدا وصال قاطعه % % فاعمد إليه ودع قطاع واصله % 10(@)(@@) % يمم أبا الصقر إن الله فضله % وفات كل نظير في فضائله % % PageV01P3567 11(@)(@@) % من كل طول وطول في شمائله % % وكل جود وجود في أنامله % 12(@)(@@) % إذا ارتدى السيف لم يمسك بقائمه % ليستقل ولم يخطط بسافله % 13(@)(@@) % سيف ترد سيف غير ذي طبع % كأنما الرمح يمشي في حمائله % 14(@)(@@) % لاشيء أقرب حينا من مناضله % % أو من مطاعنه أو من منازله % 15(@)(@@) % من لا يرى المال إلا هم خازنه % ولايرى الزاد إلا ثقل آكله % 16(@)(@@) % مما حفظناه من أمثال حكمته % % لن يملك المال إلا كف باذله % % 17(@)(@@) % من كل كفء فقير من فضائله % وكل عاف غني من فواضله % 18(@)(@@) % خرق يشح على صغرى محامده % كيما يشح على كبرى طوائله % % 19(@)(@@) % غيران حين يحامي عن مكارمه % كالليث كادح ليثا عن حلائله % 20(@)(@@) % تلقاه عند مباراة النظير له % % كالسيل دافع سيلا عن مسايله % PageV01P3568 21(@)(@@) % منابذ لأعاديه وثروته % % كلا الفريقين يرمي في مقاتله % 22(@)(@@) % يكشف الدهر عنه في تصرفه % % عن نصل قلعي من مناصله % % 23(@)(@@) % كأنه بين أحوال تداوله % % بدر تهاداه شتى من مغازله % % 24(@)(@@) % أحيا به الله قوما بعد هلكهم % وأهلك الله قوما في غوائله % 25(@)(@@) % كالبحر أروى بني الدنيا وأغرقهم % % فهم رواء وغرقى في سواحله % 26(@)(@@) % أضحى الملوك وأضحينا نحمله % % تحميل من ليس يخشى وهي كاهله % 27(@)(@@) % عليه أثقال أمر الله يحملها % % والناس يالك من عبء وحامله % 28(@)(@@) % كأنه وحده جيش له لجب % صواهل الأرض شتى من صواهله % % 29(@)(@@) % فللرعاة أحاظ من نصائحه % وللرعايا أحاظ 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms817# من نوافله % 30(@)(@@) % ترى دعاوى قوم فوق حاصلهم % % وما دعاويه إلا دون حاصله % PageV01P3569 31(@)(@@) % للأريحية مشي في مفاصله % % وليس للراح مشي في مفاصله % % 32(@)(@@) % ذو الفضل في دهره لا عند ناقصه % بل عند كامله بل عند فاضله % 33(@)(@@) % ياكوكب الدهر قدما في غياهبه % % يامعلم الدهر قدما في مجاهله % % 34(@)(@@) % أصبحت في الذروة العليا من شرف % % منازل الناس شتى في أسافله % % 35(@)(@@) % فهم أنابيب رمح أنت عامله % لابل سنان طرس فوق عامله % 36(@)(@@) % يامعقلا غير مخشي غوائله % لمن أتته الدواهي من معاقله % 37(@)(@@) % أنت المخاطب لا يهدى لسائله % سوء استماع ولا يصغى لعاذله % % 38(@)(@@) % أماترى الدهر قد ألقى كلاكله % % على امرىء بينكم ملقى كلاكله % % 39(@)(@@) % يا آل همامه يا آل مرته % % يا شيبانه يا آل وائله % % 40(@)(@@) % مالي حرمت وحظ الناس كلهم % ممن ذنوبي خير من وسائله % % PageV01P3570 41(@)(@@) % أعيذ عدلك أن يلفى بحضرته % % خصمي وحقي مغلوب بباطله % % 42(@)(@@) % ماحق ميدان مجد أنت صاحبه % إجراء ناهقة قدام صاهله % % 43(@)(@@) % سائل بي الشعر إني من مصاعبه % فإن أبيت فهبني من أزامله % % 44(@)(@@) % أعيذ مزنك أن يشقى ببارقه % شيمي وتسعد أقوام بوابله % % PageV01P3571 البحر : - 1(@)(@@) % عد عنك المنازلا % % والطلول المواثلا % % 2(@)(@@) % إن للشعر في سلي % % مان عنهن شاغلا % % 3(@)(@@) % ملك لا يرى اللهى % % تستحق الوسائلا % % 4(@)(@@) % حسب راجيه عنده % أنه جاء سائلا % % 5(@)(@@) % لايرى المن قائلا % ويرى المن فاعلا % % 6(@)(@@) % سيبه عقر ماله % وهو يدعى فواضلا % % 7(@)(@@) % ويراه فرائضا % ويسمى نوافلا % % 8(@)(@@) % فتيممه واثقا % لاتيممه آملا % % 9(@)(@@) % وإذا كادت الأعا % % لي تلاقي الأسافلا % % 10(@)(@@) % وطىء الأرض وطأة % فأقر الزلازلا % % PageV01P3572 البحر : - 1(@)(@@) % أبا حسن قد قلت لو كان فعال % فحسبك قد سارت بخطبك أمثال % 2(@)(@@) % وأصبح ماقد قلته وثوابه % عناؤك والحرمان والقيل والقال % 3(@)(@@) % ظللت على شر الحجارة عاكفا % وليست لعباد الحجارة أعمال % 4(@)(@@) % ذهبت وإسماعيل في غير مذهب % وأكثر تباع المطامع ضلال % 5(@)(@@) % فمناك ظن أن تنال نواله % % ومناه ظن أن تدوم له الحال % 6(@)(@@) % وأنى يرى لله إهمال مفسد % وأنى يرى للفضل في الناس أفضال % 7(@)(@@) % تمنيتما مالا يكون فأقصرا % % فقد لاح من غراء كالفجر إقبال % % 8(@)(@@) % تجلت سليمانية عبدلية % يحقق فيها للمحقين آمال % 9(@)(@@) % فلا يتعاظمك الدعي وحاله % وإن للأحلام في النوم أهوال % 10(@)(@@) % كأني به في محبس 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms818# وثيابه % من العمر والنعماء والعز أسمال % % PageV01P3573 11(@)(@@) % غلائله الأمساح يأكلن جلده % وحليته أقياد سخط وأغلال % 12(@)(@@) % يغنيه بعد المسمعات إذا مشى % % حديد له منه سوار وخلخال % 13(@)(@@) % كأني به قد قيل بعد ذهابه % % ذميما وقد لفته نار وأنكال % 14(@)(@@) % تردى مضيع الماء والمال في لظى % % وغالته من أفعاله الشنع أغوال % % 15(@)(@@) % فلا ذاق عفو الله عرة دولة % % نبيه المخاري للخبائث أكال % 16(@)(@@) % وضيع المباني شامخ الأنف طامح % قصير المساعي للكبائر حمال % % 17(@)(@@) % أضاع وخان الفيء واستضعف الورى % % وأصبح يغتال الملوك ويحتال % % 18(@)(@@) % كتضييعه ماء الرجال وخونه % % وليست لأرحام المخانيث أحمال % 19(@)(@@) % ولو أن فحلا كان يحبل مرة % إذن ناله مما تجلل إحبال % % 20(@)(@@) % فأزهق مكر الله ذي الحول مكره % عقابا ومكر الله للمكر قتال % PageV01P3574 21(@)(@@) % وأصبح يبكيه نساء وصبية % تساند أيتام عليهم وأرمال % 22(@)(@@) % وماعجب أن خانت الماء رملة % ولا منكر أن ضيع الماء غربال % 23(@)(@@) % وقد كان رجى غلطة من أميرنا % % وهل يملك الدنيا مسيح ودجال % % 24(@)(@@) % وكنا نراه كاتبا أو مؤاجرا % فواثبنا منه الوليد وبلال % % 25(@)(@@) % وما كان إلا ثعلبا كان حينه % فأودى به عبل الذراعين رئبال % % 26(@)(@@) % فأصبح مطويا لمثواه أربع % تباع ومشروبا لمثواه أرطال % % 27(@)(@@) % صيام شرب يستحث كؤوسه % % أراعد بالخابور نوق وأجمال % % 28(@)(@@) % لقد خلطت فيه البذور بحقها % % إذا خلط التدبير أهوج بطال % % 29(@)(@@) % ولاتبتئس بالعسر فاليسر بعده % % وهل دون ماترجوه بالله أقفال % % 30(@)(@@) % لعلك والله المبلغ أن ترى % % وآمالك الممطولة الوعد أموال % % PageV01P3575 31(@)(@@) % بأيدي بني وهب فإن سحابهم % سحاب يعم الناس بالغيث هطال % 32(@)(@@) % أوليتك تنقاد الأماديح فيهم % وليست على الأفكار منهن أثقال % 33(@)(@@) % لكل بديل حين يخلو مكانه % وما لبني وهب من الناس أبدال % % 34(@)(@@) % هم جبل الله الذي لو أزاله % وحاشاهم مازال للأرض زلزال % % 35(@)(@@) % وهم آمنات الله بين عباده % % فلو فورقوا مافارق الناس بلبال % % 36(@)(@@) % ولم يخلقوا أبطال عسف وشدة % ولكنهم بالرفق واللين أبطال % 37(@)(@@) % وليسوا بأجذال الطعان ذوي القنا % % ولكنهم للطعن بالرأي أجذال % 38(@)(@@) % وبالرأي لا بالرمح والسيف مصلتا % تواصل أوصال وتنبت أوصال % 39(@)(@@) % يسوسون أقلاما خماصا بطونها % % وهم وهي أشباه من الخمص أشكال % 40(@)(@@) % خماص بأيديهم خماص عفائف % عن الغي لم يخبث لهاقط آكال % PageV01P3576 41(@)(@@) % علي أنهم جودا بحار زواخر 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms819# % وإن طولبوا بالحلم يوما فأجبال % % 42(@)(@@) % ميامين يضحى من تولوا أموره % مليا بأن يجبى له الحمد والمال % 43(@)(@@) % عليك ولي العهد بالقوم إنهم % % إذا وكلوا بالملك لم يك إخلال % 44(@)(@@) % ولم يك في تلك الظهارة سبه % ولم يكن في تلك البطانة إدغال % % 45(@)(@@) % ويهنيك أن أصبحت دنيا وجنة % فأصبحت الدنيا بدنياك تختال % % 46(@)(@@) % ولازلت جار المجد في رأس هضبة % تفوت الردى ما حلت الهضب أوعال % % 47(@)(@@) % حياتك تخليد وعيشك نعمة % وبرداك إعظام وتاجك إجلال % 48(@)(@@) % وفيك من الخيرات ما رام رائم % وما ارتاد مرتاد وما اقتال مقتال % % 49(@)(@@) % وإن رفرفت يوما عليك ملمة % فرفرف جبريل عليك وميكال % % 50(@)(@@) % وياطالب المعروف من غير وجهه % % إليهم فثم النيل لاشك والنال % PageV01P3577 51(@)(@@) % إليهم فما بدء الوفادة غمة % عليهم ولاعود الزيادة إملال % 52(@)(@@) % هنالك أعراق كرام وأوجه % وسام وأخلاق جسام وأفعال % 53(@)(@@) % أناس إذا علوا رأوا أن علهم % % عفاتهم تلك الفواضل إنهال % 54(@)(@@) % وما القوم بالجهال بل أهل سؤدد % تغابوا ولاحوهم على ذاك جهل جهال % 55(@)(@@) % كرام إذا هموا بتشييد سؤدد % نسوا عنده ما شيد العم والخال % 56(@)(@@) % كأنهم ما ورثوا ما كفاهم % وقد شاد أعمام بناهم وأخوال % 57(@)(@@) % تبارى لهم مدح ومنح كلاهما % % وإن رغم الحساد في الأرض جوال % 58(@)(@@) % وإما عراهم مادحوهم تحاشدوا % % لتصديقهم فالقول للفعل منثال % % 59(@)(@@) % إذا استنطقوا قالوا وإن سئلوا سالوا % % وإن ساوروا نالوا وإن طاولوا طالوا % % 60(@)(@@) % تصاغ بنعمى آل وهب أجنة % ويغذى بها من بعد ذلك أطفال % PageV01P3578 61(@)(@@) % ويكتهل الشبان تحت ظلالها % % وتهرم أجيال عليها وأجيال % % 62(@)(@@) % وإن عبيد الله للرأس منهم % ولولا مكان الرأس لم تك أوصال % % 63(@)(@@) % تلافي عبيد الله دين محمد % فداوته كفاه وفي الدين إعضال % 64(@)(@@) % ورد بناء الملك سورا مشيدا % وقد بقيت منه رسوم وأطلال % 65(@)(@@) % أبو القاسم المقسوم في الناس عونه % إذا اقتسم الآفاق خوف وإمحال % 66(@)(@@) % فتى لم يزل يسعى لدن كان ناشئا % لتنجز آمال وتمطل آجال % % 67(@)(@@) % وتبذل كفاه عقائل ماله % % ليسكت سؤال وينطق عذال % 68(@)(@@) % إذا حالت الأفعال ألفيت فعله % وأولاه إحسان وأخراه إجمال % 69(@)(@@) % كسا المجد من أبراده بعد عربه % وحلى العلا من حليه وهي أعطال % 70(@)(@@) % وأي ابن تدبير وراعي رعية % ووالي رعاة حين تنهال 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms820# أجوال % PageV01P3579 71(@)(@@) % أخو الرأي والعزم اللذين كلاهما % % شهاب سماوي وأبيض قصال % % 72(@)(@@) % له عزمات لاتفات بفرصة % وفيه أناة قبل ذاك وإمهال % 73(@)(@@) % يبادر إلا أنه غير مرهق % ويملي فلا الإمهال إذ ذاك إهمال % 74(@)(@@) % فلا في تأنيه المبادىء إغفال % ولافي تلافيه العواقب إعجال % 75(@)(@@) % مدحت به من لامعاناة مدحه % % عناء ولاتقويل راجيه إعوال % 76(@)(@@) % وقاه وقاء من يد الله محصن % لنعماه أن يغتالها الدهر مغتال % 77(@)(@@) % ومتع بابنيه وبالسؤل فيهما % % لتكرم أفعال وتحسن أقوال % 78(@)(@@) % ولاخليوا من ثروة وسماحة % لتقسم أنفال وتصلح أحوال % 79(@)(@@) % ولا عريا من نجدة وسلامة % لتنجاب أهوال وتؤمن أوجال % 80(@)(@@) % يرون العطايا في المكارم والعلا % % فرائض محكوما بها وهي أنفال % PageV01P3580 81(@)(@@) % غيوث لها ضوء الشموس وإنها % % شموس لها صوب ملث وأظلال % PageV01P3581 البحر : - 1(@)(@@) % لعمري لقد سهلت ماليس بالسهل % % فسمعا لوعظ أو فوعظا على رسل % % 2(@)(@@) % أسهلت عندي والسفاهة كاسمها % % رزيئة ود ليس من ناجم البقل % 3(@)(@@) % ولكن من الفرس الكريم الذي سمت % بواسقه غير الأشاء ولا الجعل % % 4(@)(@@) % ألا في سبيل الله ود رببته % بماء الصفاء العذب في الخلق السهل % 5(@)(@@) % فلما تطعمت الثمار وجدتها % % أمر من البلوى وأدهى من القتل % 6(@)(@@) % ألا لا أراني أيها الناس لاقيا % من الناس من يرعى لخير ولا فضل % 7(@)(@@) % ولا معظما خلا لغير ثرائه % % وإن كان ذا تقوى وإن كان ذا عقل % 8(@)(@@) % وكم واعد عدلا على خلطائه % % إذا قلد الأحكام تاب من العدل % 9(@)(@@) % ينوح على الأحرار في جور غيره % % ويوسعهم جورا ويشرى على العذل % 10(@)(@@) % فلو ساس من ألحاه جهل عذرته % % ولكن من ألحاه عال عن الجهل % % PageV01P3582 11(@)(@@) % إليك أبا عبد الإله بعثتها % % على ثقة بالحلم منك وبالبذل % 12(@)(@@) % جريت مع الإدلال شأوا مغربا % فإن قلت لي مهلا مشيت على مهل % 13(@)(@@) % ولكنني لابد لي من مقالة % % أقوم بها ليست بظلم ولاهزل % 14(@)(@@) % ألست الذي أصفيته واصطفيته % % وآثرته قدما على المال والأهل % % 15(@)(@@) % ألست الذي أملته وادخرته % % فمالي وقد أمرعت أرتع في المحل % 16(@)(@@) % تجاوز حديث البخس والوكس كله % % وخذ في حديث جل عن ذلك الفصل % 17(@)(@@) % أتحدث أمرا مثل أمرك جامعا % فأخرج منه مخرج الساقط النذل % 18(@)(@@) % أكنت قذاة العين دون الألى دعوا % % أم السوءة 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms821# السوآء في ذلك الحفل % 19(@)(@@) % أكان تخلي مغرسي واشتغاله % % سواء وقد صنفت في جوهر النخل % % 20(@)(@@) % ألا صاحب يبكي لمصرع صاحب % وإن كان لم يكلم برمح ولا نصل % PageV01P3583 21(@)(@@) % ألا أين عني المعظمون لحرمتي % % فقد فضلتها عندكم حرمة الوغل % 22(@)(@@) % ألا أين عني الصائنون لصفحتي % % فها هي قد أضحت أذل من النعل % 23(@)(@@) % ألا أين عني الحافظون صنيعهم % % ألا أين مني حافظو البعد والقبل % 24(@)(@@) % أأفضت بي الأيام در درها % % إلى ما ترى عيني من الهون والأزل % 25(@)(@@) % تيقظ أبا عبد الإله فإنها % % مناعس لاتعشى امرءا فائز الخصل % 26(@)(@@) % أتهجرني والحبل في خير معقد % وتحنو وتدنو عند مضطرب الحبل % % 27(@)(@@) % وما ذاك عن ذنب سوى أن خلتي % % بلا ملق فيما علمت ولاختل % 28(@)(@@) % تأمل فإنا والبهائم أسوة % سوى عدلنا في النقض طورا وفي الفتل % 29(@)(@@) % فضلنا بإيثار الجميل وفعله % % ونحن سواء والبهائم في الأكل % 30(@)(@@) % أما لتأذينا على الناس حرمة % لديكم أما للشكل حق على الشكل % PageV01P3584 31(@)(@@) % أما للتشاكي والتباكي ذمامه % ليالي ذادونا عن العل والنهل % 32(@)(@@) % ضربت لك الأمثال تنبيه واعظ % وحاشاك من قيل وحاشاك من قول % 33(@)(@@) % وتجمعنا من بعد قربى كتابة % وإن قل علمي بالجريب وبالأشل % % 34(@)(@@) % ألم تر أن الغدر أردى ابن بلبل % وقد كان ذا خيل وقد كان ذا رجل % 35(@)(@@) % ومازلت تلحاه على مثل ما أرى % % فنكب هداك الله عن سنن النبل % 36(@)(@@) % ولا تعتذر إلا بما أنت أهله % فلم تؤت من فرع ولم تؤت من أصل % 37(@)(@@) % وكم عاتب أهدى إليك عتابه % % فكافأته بالجاه والنائل الجزل % 38(@)(@@) % كذاك عهدنا السؤدد الطفل فيكم % % فكيف تراه وهو في نهية الكهل % 39(@)(@@) % ولا تشتغل عني بلومك خطبتي % % فتودع صدر الود ذحلا على ذحل % 40(@)(@@) % إلى الله أشكو أن شعري مظلم % % وأني من الأيام في منهل ضحل % PageV01P3585 41(@)(@@) % ثناؤكم للبحتري وودكم % ومدحي لكم حاشا هواكم من الخبل % 42(@)(@@) % فإن قلتم للحكم بالحق فضله % % فما للدبغ النحل من عسل النحل % 43(@)(@@) % أسارت له فيكم أماديح مثلها % % يحمل ثقل الحق مستثقلي الحمل % 44(@)(@@) % أم الخلة الأخرى التي تعرفونها % % بل الخلة الأخرى وما النكث كالجدل % % 45(@)(@@) % ألم يتجهمكم بمدح كأنه % % شبا الحد أسرى في البقاع من النمل 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms822# % % 46(@)(@@) % هجاكم بمنزور الهجاء ووغده % % وماحلية الحسناء بالعاج والذبل % 47(@)(@@) % فنال التي أجرى لها وهو وادع % مصون وقد أسقاكم حمأة السجل % 48(@)(@@) % فكان هجاء أن هجاكم وأنه % % أبى شغلكم أشعاره غاية الشغل % % 49(@)(@@) % فعارضته فيكم بمدح كأنه % % شباب جديد أو صقال على نصل % % 50(@)(@@) % فكافأتموني بالذي هو أهله % % من المنع والحرمان والرفض والخذل % PageV01P3586 51(@)(@@) % وكافأتموه بالذي أستحقه % من البر والإحسان والعطف والوصل % 52(@)(@@) % هطلت فأطفأت الصواعق عنكم % % فلم تفرقوا بين الصواعق والهطل % 53(@)(@@) % بلى قد فرقتم فرق عاكس خطة % وما المغزل المعكوس بالمحكم الغرل % 54(@)(@@) % إلى الله أشكو أن بحري زاخر % وأني من المعروف في منهل ضحل % % 55(@)(@@) % ولو كف وجهي قوته صنت ماءه % % ومنطقه عن موقع الجود والوبل % 56(@)(@@) % وأعفيت نفسي من أناس أراهم % يعدونني رذلا وما أنا بالرذل % 57(@)(@@) % ويرمونني دون امرىء لو نضلته % % لكان لهم حظان في ذلك النضل % 58(@)(@@) % مديح يعالي ذكرهم وحماية % لأعراضهم أمدادها عدة الرمل % 59(@)(@@) % وما ذاك عند البحتري لصاحب % % ولابعضه في باب فرض ولانفل % 60(@)(@@) % ومابي قصب البحتري وثلبه % وإن صال فحل ذات يوم على فحل % % PageV01P3587 61(@)(@@) % شهدت له بالعتق في الشعر مخلصا % وما أنا فيه بالهجين ولا البغل % 62(@)(@@) % ألا ذاك مجاج السلاف علمته % % وإني لمجاج لما ليس بالنطل % % 63(@)(@@) % ولكن حظا ناله وحرمته % أرى خشله معرى ومعوى من الخشل % % 64(@)(@@) % لقد أنكرتني بعلبك وأهلها % % بل الأرض بل بغداد صاحبة التبل % 65(@)(@@) % أرى لصديقي أمن ظلمي ولا أرى % % له أمن إنصافي وإن كان في وعل % 66(@)(@@) % فلا يغترر من امرؤ بدماثة % فإني امرؤ أوى إلى جلد عبل % 67(@)(@@) % وفي السيف فصل تحت صقل يزينه % % وفي الذي فيه من الصقل والفصل % 68(@)(@@) % وماهذه مني وعيدا بجهلة % ولكنها الإخبار عن عزمة بتل % % 69(@)(@@) % أمر وأحلي منطقي في عتابكم % % وكل عتاب ذو سجاح وذو كحل % 70(@)(@@) % وفي غيرتي خفت وزفت نعامتي % % ألا فاعذروها أن تزف من الرأل % PageV01P3588 71(@)(@@) % ولاتنكروا صقلي الإخاء فإنه % % إذا طبع الصمصام حودث بالصقل % % 72(@)(@@) % ومهما أقل فيكم فإني أخوكم % % على كل حال من مرير ومن سحل % 73(@)(@@) % وما أنا للحم الخبيث بآكل % % وما أنا للحم الذكي بمستحلي % % 74(@)(@@) % إلى كم يحاز الرزق دوني وإنما % % إلى الله رزقي وحده لا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms823# إلى بعل % 75(@)(@@) % وماكنت للزوجات قدما بضرة % % فيهجرني بعل فترضى عن البعل % % PageV01P3589 البحر : - 1(@)(@@) % ياسيدا لم تزل فروع % من رأيه تحتها أصول % % 2(@)(@@) % أمثل عمرو يسوم مثلي % % خسفا وأيامه فطول % 3(@)(@@) % أمثل عمرو يهين مثلي % % عمدا ولا تنتضي النصول % 4(@)(@@) % ألا يرى منك لي امتعاضا % كالسيف فيه الردى يجول % 5(@)(@@) % ياعمرو سالت بك السيول % لأمك الويل والهبول % 6(@)(@@) % وجهك ياعمرو فيه طول % وفي وجوه الكلاب طول % 7(@)(@@) % فأين منك الحياء قل لي % % يا كلب والكلب لا يقول % % 8(@)(@@) % والكلب من شأنه التعدي % % والكلب من شأنه الغلول % 9(@)(@@) % مقابح الكلب فيك طرا % يزول عنها ولا تزول % 10(@)(@@) % وفيه أشياء صالحات % حماكها الله والرسول % PageV01P3590 11(@)(@@) % فيه هرير وفيه نبح % وحظه الذل والخمول % 12(@)(@@) % والكلب واف وفيك غدر % ففيك عن قدره سفول % % 13(@)(@@) % وقد يحامي عن المواشي % % وما تحامي ولاتصول % % 14(@)(@@) % وأنت من أهل بيت سوء % قصتهم قصة تطول % 15(@)(@@) % وجوههم للورى عظات % % لكن أقفاءهم طبول % % 16(@)(@@) % نستغفر الله قد فعلنا % % مايفعل المائق الجهول % % 17(@)(@@) % ما إن سألناك ماسألنا % % إلا كما تسأل الطلول % 18(@)(@@) % صمت وعيب فلا خطاب % ولاكتاب ولا رسول % 19(@)(@@) % إن كنت حقا من الندامى % % فمن ندامى الملوك غول % 20(@)(@@) % وجه طويل يسيل فوه % % أحسن منه حر يبول % % PageV01P3591 21(@)(@@) % بل فيك سرب وطول خطم % ولم يزل هكذا النغول % % 22(@)(@@) % فإن تكن آلة الندامى % % هذين فيما ترى العقول % % 23(@)(@@) % طول خطوم على وجوه % % فتوح أفواهها تهول % 24(@)(@@) % فما إذا سادة الندامى % % إلا البلاليع والفيول % 25(@)(@@) % إن رئيسا يراك يوما % لصابر للأذى حمول % 26(@)(@@) % ما ملني من أطاق صبرا % عليك بل بختي الملول % 27(@)(@@) % مستفعل فاعل فعول % مستفعل فاعل فعول % 28(@)(@@) % بيت كمعناك ليس فيه % % معنى سوى أنه فضول % PageV01P3592 البحر : - 1(@)(@@) % ياعلي العلا ابن قاسم القا % % سم في طالبي النوال نواله % 2(@)(@@) % وابن مارمة الذي يضرب المج % % د له أو بمثله أمثاله % % 3(@)(@@) % والذي أضحت المروءة والخي % % ر حليفيه والحقوق عياله % 4(@)(@@) % والذي بذله بغير ابتذال % والذي طوله بغير استطاله % 5(@)(@@) % والذي لم يرث كريم المساعي % % والعلا وابتناءها عن كلاله % 6(@)(@@) % والذي يأمن من المطال مرجي % % ه ولا يأمن المجاري مطاله % 7(@)(@@) % والذي لا يزال كل حكيم % راشد الأمر يستعين مثاله % 8(@)(@@) % ماترى في اصطناع حر شكور % % قد أراه الرجاء 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms824# مالك ماله % 9(@)(@@) % ساقه نحوك الزمان وقادت % % ه أفاعيل كفك الفعاله % % 10(@)(@@) % وعلى ظهره من الدين ثقل % يرتجى أن تحطه لامحاله % % PageV01P3593 11(@)(@@) % واعتقاد الرجاء يوجب حقا % عند من هذب الإله خصاله % % 12(@)(@@) % ومعي ذاك والمودة والشك % % ر ضميرا سجمجما ومقاله % % 13(@)(@@) % وشهدي على رجائك أن لم % % أتوسل وأن تركت الإطالة % % 14(@)(@@) % وإذا المستقي دنا مستقاه % % فحقيق أن لا يطيل حباله % % 15(@)(@@) % وكفاني من الوسائل أخلا % % قك يا أيها القريب المناله % % 16(@)(@@) % فأدلني على الزمان فمازل % % ت على صرفه كرم الإداله % 17(@)(@@) % وأجرني من أن يقول حسود % خاب أو أن يقول لي أولى له % % 18(@)(@@) % فلأنت الذي إذا أمه الآ % % مل عدت آماله أمواله % 19(@)(@@) % والذي يشتري الثناء فيغلي % % حين لا يسأل النجار الإقاله % % 20(@)(@@) % لك مني جم البديهة بالشك % % ر على الحادثات باقي العلاله % % PageV01P3594 21(@)(@@) % وقليل الخلاف يصلح إن شئ % % ت جليسا ويرتضي للوكاله % % 22(@)(@@) % إن تجالسه فالدماثة منه % % أو توكله تبل منه جزاله % % 23(@)(@@) % مستقل متى عبأت عليه % % عبء دهر لم تذمم استقلاله % % 24(@)(@@) % فيه أشياء لا يدعن ملولا % يتجنى عليه ذنب الملاله % % 25(@)(@@) % فاختبره في الحالتين جميعا % تجد الجد عنده والبطالة % % 26(@)(@@) % واعتقله فإنه أيها السي % % يد إن برته أطلت اعتقاله % % 27(@)(@@) % وعزيز على مدحي نفسي % % غير أني جشمته للدلالة % % 28(@)(@@) % وهو عيب يكاد يسقط فيه % % كل حر يريد إظهار آله % % 29(@)(@@) % واعتسافي العيوب حرصا على قر % % بك حق إن لم ترد إبطاله % % 30(@)(@@) % يا محب الجمال ليس جميلا % بجميل ألا يريك جماله % % PageV01P3595 31(@)(@@) % وإذا المرء لم يلوح بما في % % ه تخطاه رائد بجهاله % % PageV01P3596 البحر : - 1(@)(@@) % رواغي رواغ الخائف القلب لا السالي % % وهجري هجر النافر الجأش لا القالي % % 2(@)(@@) % ولو شئت شبهت الذي أستحقه % % بحالك هاتيك الجليلة لا حالي % % 3(@)(@@) % فرفعت من قدري وخفضت عيشتي % % وأمنت روعاتي وحققت آمالي % % 4(@)(@@) % ولو كان هذا أو أقل قليله % % لكان لزوم الباب ما عشت من بالي % % 5(@)(@@) % أردني لذاك الطول لا لي فإنه % % عظيم وزن حمدي وإن خف مثقالي % % 6(@)(@@) % وإن لم تردني فانصرافي إذا غدا % % يوافق ما تهوى يسكن بلبالي % % 7(@)(@@) % وما بي سخائي عنك لكن تتبعي % % رضاك وهل يسخو بمثلك أمثالي % % 8(@)(@@) % وهل أنا إلا كالطريد طردته % إذا طردتني عن 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms825# فنائك أوجالي % % 9(@)(@@) % محاسنك أحفظها وإن كنت قد محت % % مقابح أعمالي محاسن أعمالي % % 10(@)(@@) % فأحسن ولا تخلل فأنت أهله % وهب لي صفحا عن سقاطي وإحلالي % % PageV01P3597 11(@)(@@) % وإني لأعطي الظن فيك حقوقه % إذا جلت في أحوال فكري أجوالي % % 12(@)(@@) % إخالك لو عاينتني في حفيرتي % % بكيت عظامي الباليات وأوصالي % % 13(@)(@@) % وسرك أن أحيا كما كنت مرة % % ببذل الفداء الجزل والثمن الغالي % % 14(@)(@@) % فلا تجفني حيا ولا تبك رمتي % % كمنصرف عني يسائل أطلالي % % 15(@)(@@) % ولا تتمن العيش لي وهو فائت % ونبتزنيه عامدا وهو سربالي % % 16(@)(@@) % تحدثت الأملاء أنك حابسي % % على غير إجرام وأنك مغتالي % % 17(@)(@@) % وما قيل أملاء الرجال وقالهم % % بأسهل من قيلي عليك ومن قالي % % 18(@)(@@) % فأبق على أحدوثة الصنع إنها % % صنيعك تشكو لا صنيعي وأقوالي % % 19(@)(@@) % ولا تهج أفعال حسانا فعلتها % % لأني امرؤ أخطأت في بعض أفعالي % % 20(@)(@@) % فإن هجاء المرء بالفعل نفسه % هو الشيء يبقى والمقول هو البالي % % PageV01P3598 21(@)(@@) % وما قلت لولا ما تظني سوى الذي % % أراه جديرا أن يحسن أحوالي % % 22(@)(@@) % فلا تكره السوءى من القول مغريا % بها الناس صلاها لديك مع الصالي % % 23(@)(@@) % كمبغض أمر غامس فيه نفسه % % وقد كان عنه في ذرى المنظر العالي % % PageV01P3599 البحر : - 1(@)(@@) % وكم قائل قد قال فيك مرة % أتصحب ذا بخل ولست بذي بخل % 2(@)(@@) % فقلت أنا المفتاح والقفل صاحبي % % وهل يوجد المفتاح إلا مع القفل % PageV01P3600 البحر : - 1(@)(@@) % خليلي عوجا بالديار فإنما % % دعوتكما باسم الخلال لتفعلا % % 2(@)(@@) % ديار التي أرعيتها بارض الهوى % % وأمطرتها وسمي دمعي أولا % % 3(@)(@@) % جعلت لها صدري مرادا تروده % % وبوأتها من حبة القلب منزلا % % 4(@)(@@) % فما علقت من قبلها النفس معلقا % ولا اتخذت من بعدها متعللا % % PageV01P3601 البحر : - 1(@)(@@) % سألتك بالأصل الذي أنت فرعه % وأشفع بالفرع الذي أنت أصله % % 2(@)(@@) % إذا أنت ودعت الوزير فقل له % % توخ ابن رومي بما أنت أهله % % 3(@)(@@) % وإني أرى المسكين لا شك ضائعا % متى هو لم يوصل بحبلك حبله % 4(@)(@@) % أجبه إذا نادى وأنجده صارخا % ودعدعه إن زلت عن الدحض نعله % % PageV01P3602 البحر : - 1(@)(@@) % عنفت شيخي في مواثبة % تواثباها وقد يعوج معتدل % 2(@)(@@) % فقلت للأكبر الألحى هبا لكما % % الأذان وهذا المذهب الخطل % % 3(@)(@@) % فقال نحن ديوك الله عادتنا % % أنا نؤذن أحيانا ونقتتل % 4(@)(@@) % لا سيما 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms826# عند خضب الشيخ لحيته % % ورأسه واختضاب الشيخ منتصل % % 5(@)(@@) % نحن الديوك بحق يوم ذلكم % % إذا بدت حمرة الحناء تشتعل % 6(@)(@@) % فإن أجدنا سفاد السانحات لنا % % فثم تقوى معانينا وتكتهل % % 7(@)(@@) % فاعذر على ما ترى فينا فحلفتنا % % ديكية ليس فيها جانب دغل % 8(@)(@@) % وبين كل الديوك الأن ملحمة % ليست بمعدومة ماحنت الإبل % % 9(@)(@@) % فقلت لا بل يقول القائلون لكم % % ديوك إبليس والأقوال تنتضل % 10(@)(@@) % فيكم من الشر ما يزرى بخيركم % % فأين تذهب عنه أيها الثمل % PageV01P3603 11(@)(@@) % فقالأخطأت فالق الدين منتقلا % إن كنت مما يسوء الدين تنتقل % 12(@)(@@) % إن الأذان لخير عند مسلمنا % % قليله لكثير الشر محتمل % % 13(@)(@@) % والصالحات بحكم الله معصفة % بالصالحات وحكم الله يمتثل % 14(@)(@@) % فسمنا أفضل اسمينا فحق لنا % % إن كنت ممن بثوب الذين يشتمل % % 15(@)(@@) % فقلت أحسنت بل أحسنتما عملا % وقدوة وأساء اللائم العجل % 16(@)(@@) % وقلت للدين إذ أكدت معادنه % % ودع هريرة إن الركب مرتحل % % PageV01P3604 البحر : - 1(@)(@@) % أبا حسن صل حاجتي بوصالها % % وإلا فدع لي صفحتي بصقالها % % 2(@)(@@) % بدأت بمعروف فثن بمثله % % حميدا وأطلق حاجتي من عقالها % % 3(@)(@@) % وإلا فاعتق طامعا من مطامع % يروح ويغدو عانيا في حبالها % % 4(@)(@@) % بذلت لك التقريظ غير مماطل % لا تبلني في حاجتي بمطالها % % 5(@)(@@) % فعندي بذل الشكر عند قضائها % % وعندي بذل العذر عند اعتلالها % % 6(@)(@@) % متى تكسني من حاجتي ثوب نفعها % % فأنت الفتى المكسو ثوب جمالها % % 7(@)(@@) % جرت سنن للفاعلين ذوي العلا % % وأنت حقيق يا ابنهم بامتثالها % % 8(@)(@@) % فجد لي بوجه صونه في ابتذاله % % وكم من وجوه صونها في ابتذالها % % 9(@)(@@) % وما من علاء في يد عند ملكها % % ولكنه لاشك عند فعالها % % 10(@)(@@) % فعجل ولا تمطل بما أنت أهله % % فخيرات أفعال الفتى في عجالها % % PageV01P3605 11(@)(@@) % وما لرجال المخلفين عداتهم % % من الفعلات الزهر غير انتحالها % % PageV01P3606 البحر : - 1(@)(@@) % رأيتكم تبدون في الحرب عدة % ولا يمنع الأسلاب منكم مقاتل % 2(@)(@@) % فأنتم كمثل النخل يظهر شوكة % % ولا يمنع الجرام ما هو حامل % % PageV01P3607 البحر : - 1(@)(@@) % تنافستك من الأعياد أربعة % شتى على أربع شتى من الملل % 2(@)(@@) % الفصح والفطر والنيروز يقدمه % % عيد الفطير ازدحام الورد بالنهل % 3(@)(@@) % جاءت سراعا تباري في أزمتها % % تكاد تسبق شوقا مبلغ الأمل % % 4(@)(@@) % في مدة عدة العشرين أولها % % متى شفت بك ما 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms827# لاقت من العلل % 5(@)(@@) % وغير بدع أن اشتاقت إلى ملك % في كل مجد وخير سائر المثل % 6(@)(@@) % به أديلت توالي الدهر فانتصفت % % أيامه الآن من أيامه الأول % % 7(@)(@@) % أضحت به أخريات الدهر لابسة % فخرا يقوم مقام الحلي والحلل % % 8(@)(@@) % فاسلم على الدهر يا بن الأكرمين له % % لا بل لمعتصم منه وذي أمل % % PageV01P3608 البحر : - 1(@)(@@) % لا يعدم الله يديك الصولا % % على الأعادي وعلينا الطولا % % 2(@)(@@) % أصبحت في أمر صديق زولا % % جمعت فيه قوة وحولا % % 3(@)(@@) % وما تهيبت هناك هولا % % حتى رأى الويل عليه العولا % % 4(@)(@@) % من بعد ما أنضى البلاد جولا % % وعاد فحلا يستضيم الشولا % % 5(@)(@@) % أولى له أولى به وأولى % % فاسلم بديئا للعلا وأولى % % 6(@)(@@) % في ظل عيش لم يخالط غولا % % تجد فعلا وتجد قولا % % 7(@)(@@) % أنت الكريم ليس فيه لولا % % قد أصبح الخير عليه استولى % % 8(@)(@@) % يا من أمر حاله وأحولى % % PageV01P3609 البحر : - 1(@)(@@) % فتى يقطع الآمال غر مخيب % ولكنه يعطي قصار المؤمل % 2(@)(@@) % إلى أين بالآمال بعد نواله % % إلى أين وافى السفر آخر منزل % PageV01P3610 البحر : - 1(@)(@@) % يا لقوم لأحمد بن بنان % % ولما قال من عجيب المقال % % 2(@)(@@) % قال لما اشترى غلاما كفاه % كثرة الغرم واكتراء الرجال % % 3(@)(@@) % صنت مالي عن الفساد بمالي % % حان لي أن أصون مالي بمالي % % PageV01P3611 البحر : - 1(@)(@@) % يابني طاهر طهرتم وطبتم % % وزكوتم فروعكم والأصول % 2(@)(@@) % جاركم محرم وأعراضكم بس % ل ولكن مالكم مبذول % 3(@)(@@) % كاد يكدي بطون أيديكم البذ % ل ويخفي ظهورها التقبيل % PageV01P3612 البحر : - 1(@)(@@) % رأيت الأخلاء في دهرنا % % بظهر المودة إلا قليلا % % 2(@)(@@) % بطاء عن المبتغي نصرهم % % إلى أن يغادر شلوا أكيلا % % 3(@)(@@) % فإن حشدوا لأخ مرة % أدلوا عليه دلالا ثقيلا % % 4(@)(@@) % فلا تفزعن إلى نصرهم % وكن للمظالم ظهرا ذليلا % % PageV01P3613 البحر : - 1(@)(@@) % ألا نسيا نفسي حديث البلابل % بمشمولة صفراء من خمر بابل % 2(@)(@@) % فما العيش إلا في ندام سلافة % تنادمها العصران غير ثمائل % % 3(@)(@@) % نضا الدهر عن أسآرها جل لونها % % فغادرها من لونها في غلائل % % 4(@)(@@) % سرابية آلية تصرع الشذا % % وترفع من شخص القذى المتضائل % % 5(@)(@@) % ثوت تصطلي شمس الظهائر برهة % إلى أن أفادت لون شمس الأصائل % % 6(@)(@@) % إذا ما تمشت في عظام ابن كبرة % مشى لين الأوصال رخو المفاصل % % 7(@)(@@) % ترد له غصن الشباب وقد 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms828# ذوى % % رطيبا كغصن البانة المتمايل % % 8(@)(@@) % إذا نزلت بالهم في دار أهله % شكى الضيم شكوى أهل ضيم نازل % % 9(@)(@@) % بماء جلت عن جر صفحته القذى % % حريق لها ذيل كميش الذلاذل % % 10(@)(@@) % إذا اطردت أنفاسها في سراته % % تسلسل عاري المتن جعد السلاسل % % PageV01P3614 11(@)(@@) % قرته السواري بين أكناف روضة % تراعى بها عين النعاج المطافل % % 12(@)(@@) % به عبق كالمسك مما تسحبت % % عليه الصبا تفلى خزامى الخمائل % % 13(@)(@@) % إذا ساورته الراح في الصحن لألأت % وجوه الندامى بالبروق العوامل % % 14(@)(@@) % كأنهما شوبان ذوب سبائك % من التبر معلول بذوب وذائل % 15(@)(@@) % شربت على صحو المشيب وطال ما % % شربت على سكر الشباب المخايل % % 16(@)(@@) % وأعذر شراب المدامة شارب % لتقصير أيام المشيب الأطاول % % 17(@)(@@) % وللكأس أخرى أن تكون تعلة % لذي الشيب عن ذكر الشباب المزايل % % 18(@)(@@) % إذا ما تذكرت الشباب جعلتها % % رقوءا لأسراب الدموع الهوامل % % 19(@)(@@) % أدرت على لهو الحديث كؤوسها % % ونادمتها الخلان بين الخلائل % % 20(@)(@@) % طلبت بها سلم الهموم وربما % % طلبت بها جر الذيول الذوائل % % PageV01P3615 21(@)(@@) % وحدثت ندماني أحاديث مامضى % % من العيش أقفوها بأنه ثاكل % % 22(@)(@@) % أعاذلتي في الراح أشيهت فارعوي % % لشأنك إني لا أدين لعاذل % % 23(@)(@@) % فلو أسمحت عنها القرينة أسمحت % % لشيب كنوار الثغامة شامل % % 24(@)(@@) % وقالت دع الشبان والكأس إنها % % حمى بعد مر الأربعين الكوامل % % 25(@)(@@) % ألم يكفها أن المشيب أفاتني % % نصيبي من وصل الحسان العطائل % % 26(@)(@@) % إلى أن غدت باللوم لادر درها % % لتمنعني در الكؤوس الحوافل % % 27(@)(@@) % فتشفع لي حرمان حظ بمثله % % رماها عن اللوماء رام بشاغل % % 28(@)(@@) % أأترك عفو الكأس حران صاديا % لعلان من ريق الكواعب ثامل % % 29(@)(@@) % خلي من الأحزان في ظل جنة % قريب جناها من يد المتناول % % 30(@)(@@) % يروح ويغدو في الغواني مساعفا % بحاجات موموق حظي الوسائل % % PageV01P3616 31(@)(@@) % يميد به مأد الشباب فترعوي % % إلى جانبيه كالظباء العواطل % % 32(@)(@@) % مسقى بأفواه كأن رضابها % % جنى النحل شارت أريه كف عاسل % % 33(@)(@@) % لذاك عن الصهباء أبرد علة % وأجدر أن يغنى بتلك المناهل % % 34(@)(@@) % إليك فإنا للهوينا وشأنها % % وآل زريق للأمور الجلائل % % 35(@)(@@) % ألم تعلمي أن قد كفونا شؤوننا % % فلم يطرقوا منهن أولى لآيل % 36(@)(@@) % هم أهملونا في مصاب غيوثهم % % سدى ورعونا بالقنا والقنابل % % 37(@)(@@) % فأصبح شمل الناس شمل رعية % وسربهم في العيش سرب الهوامل 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms829# % % 38(@)(@@) % وهم حملونا منة بعد منة % على أننا منها خفاف الكواهل % % 39(@)(@@) % سأنثونثا آلائكم آل مصعب % % نثا الروض آلاء السحاب الهواطل % % 40(@)(@@) % وما نفحات الروض تثني على الحيا % % بأطيب من ذكراكم في المحافل % PageV01P3617 41(@)(@@) % أكفكم في الأرض أعين مائها % % وأقدامكم فيها مراس الزلازل % % 42(@)(@@) % أقول عليما لا محيطا بفضلكم % % ولاخابطا في القول عشوة جاهل % 43(@)(@@) % إذا شئت جاريت القوافي فيكم % مداها وما كثرت حقا بباطل % 44(@)(@@) % وما يتناهى القول فيكم لغاية % تناهي ذات بل تناهي قائل % 45(@)(@@) % ألا أيها المجري ليدرك شأوهم % % لهنك أيم الله أنصب عامل % 46(@)(@@) % إذا القول أعيا القائلين بلوغه % % فكيف به لا كيف ذاك لفاعل % 47(@)(@@) % فقف خاسئا عنهم حسيرا فإنما % % طلبت منيعا من حويل المحاول % 48(@)(@@) % اصم عن الفحشاء والعذل في الندى % % طويل التمادي في شقاق العواذل % 49(@)(@@) % يجود فيعطي ماله في حقوقه % % على منهج بين السبيلين عادل % 50(@)(@@) % وإن هاجه هيج من العذل أصبحت % فواضله مشفوعة بفواضل % % PageV01P3618 51(@)(@@) % كدجلة يجري ماؤها في سبيله % % فلا ينتحي عن قصده للمعادل % % 52(@)(@@) % فإن كفكفته الريح من شطر وجهه % % طما فاغتدى آذيه في السواحل % 53(@)(@@) % وقد شمرت عن ساقها غير أنها % % تركض في ذيل من النقع ذائل % 53(@)(@@) % إذا حال بدء دون عرف فبدؤهولا بدع منه بدؤه أريحية تحط الولايا عن ظهور الرواحل وحيد فريد في المكارم آنس بوحدته مستأثر بالفضائل يمر العطايا والمنايا لأهلهابأخفض باليه مجدا كهازلإذا ما جلته الحرب عارض رمحهعلى لاحق الآطال نهد ال % % إلى عوده المأمول أحظى الوسائل % % 53(@)(@@) % ولا بدع منه بدؤه أريحية % تحط الولايا عن ظهور الرواحل % % 53(@)(@@) % وحيد فريد في المكارم آنس % بوحدته مستأثر بالفضائل % 53(@)(@@) % يمر العطايا والمنايا لأهلها % % بأخفض باليه مجدا كهازل % % 53(@)(@@) % تهاتفت البطالهدك فارسا % شهدنا لقد صدقت بشرى القوابل % % 53(@)(@@) % أيزخر لي بحر النوال بفضله % % وتمطلني في غير حين مطال % % 53(@)(@@) % أراهم هوينا المستخف بشأنهم % % ورب مجد في الأمور كهازل % % PageV01P3619 53(@)(@@) % فغرتهم منه الغرور فأصبحت % مقاتلهم نصب المنايا القواتل % % 53(@)(@@) % ولو أنهم ساموا مخايل جدة % غذن لنجوا منها نجاء الموائل % 53(@)(@@) % تدانت لك الأقطار ضبطا وخبرة % فأصبحت لديك الأرض كفة حابل % 53(@)(@@) % فلو شئت إشرافا عليها وقدرة % قبضت على اطرافها بالأنامل % % 53(@)(@@) % لك الفضل لا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms830# تلقاء آخر ناقص % ولكنه تلقاء آخر فاضل % % 53(@)(@@) % فلا ترتهن ذمي بمطلك إنني % % بمن لا يبالي الذم غير مبالي % % 53(@)(@@) % إذا ما جلته الحرب عارض رمحه % على لاحق الآطال نهد المآكل % 53(@)(@@) % وما نزل الإصحار غلا كقانص % اريب توارى عند بث الحبائل % 53(@)(@@) % وكم قد أهان الشعر الشعر قبلك معشر % فلاقى مهينوه هوان سبال % 53(@)(@@) % طويل أبا حسن حمدي متى ما بغيته % % رخيص وغن أعرضت عنه فغال % PageV01P3620 53(@)(@@) % أفق صاغرا من نومه لجهل إنها % % تعود على نوالها بوبال % 53(@)(@@) % ونكب سبيلا أنت فيه فقد غدت % سبيلك في أمري سبيل ضلال % % 53(@)(@@) % لعمري لقد خالفت في مسددا % له في مضيق الرأي رحب مجال % 53(@)(@@) % جواد رأى منحا لم تر ما يرى % % وما زالت مذؤوما ذميم فعال % 53(@)(@@) % فقل لي وقد خالفت واحد عصره % أرأيك عن آرائه متعال % % 53(@)(@@) % كذاك يرى من حان حين سقوطه % % ومن آذنت نعماؤه بزوال % 53(@)(@@) % علوت علوا لم تكن قط أهله % % وأنت جدير بعده بسفال % 53(@)(@@) % إذا كاتب لم يمتثل رأى صاحب % % طريقته المثلى في مثال % % 53(@)(@@) % ولا ذنب للمظلوم إن بات مرصدا % لسوء فعال منك سوء مقال % % 53(@)(@@) % إذا كان سلما فالمقاتل كالشوى % % وإن كان حربا فالشوى كالمقاتل % % PageV01P3621 53(@)(@@) % فإن طاعنوه كان أول طاعن % وإن نازلوه كان أول نازل % 53(@)(@@) % حلفت لئن سفت حلمي لتقطعن % إليك قوافي الشعر كل عقال % 53(@)(@@) % يشيعه بروق الموت من صفحاته % % وفي حدة مصداق تلك المخايل % % 53(@)(@@) % ولكنه كالليث يختل صيده % % ويبرز للأقران غير مخاتل % 53(@)(@@) % ويوم عصيب ظله مثل ضحه % % بل الضح أعفى من ظلال المناصل % 53(@)(@@) % تباذل أعلاق المضنة تحته % رجال عدى يا للعدو المباذل % 53(@)(@@) % إلى أن تظل المضرحيات بينهم % % تدف بطانا دلحا بالحواصل % % 53(@)(@@) % قضى بين جمعية وكم من كريهة % قضى بين جميعها بإحدى الفواصل % % 53(@)(@@) % ألا هبلت أم المعاديه نفسه % وأين امرؤ عاداه إلا ابن هابل % % 53(@)(@@) % وما اعجلته الحرب غبرام أمره % إذا أعجل المنخوب حول الجوائل % PageV01P3622 53(@)(@@) % فلا تحسبوا تعجيله نقماته % % لأعدائه تعجيله رفد سائل % 53(@)(@@) % هو المرء ذو الوعد المعجل نجحه % % كما قد عهدتم والوعيد المماطل % 53(@)(@@) % وصول الخطى بالسيف والسيف بالخطى % % إذا الطعن حشت ناره بالسوافل % % 53(@)(@@) % دعوا الحرب تستكمل لهم أدواتها 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms831# % % ولا تعجلوها أن تعض ببازل % % 53(@)(@@) % فليس ابن الله عنهم بنائم % ولا الله عما يعملون بغافل % 53(@)(@@) % وحوش رعاها حينها حول غابة % أسامة فيها ملبد بالكلاكل % % 53(@)(@@) % فضم إليه جأشه ثم راعها % % بشدة مكروه الفجاءة باسل % % 53(@)(@@) % وما زال في عرض الأناة وكيده % بكل سبيل مرصد بالغوائل % % 53(@)(@@) % ولو عدهم قرنا كفيا لبأسه % إذن ما أتاهم من وجوه المخاتل % % 53(@)(@@) % ولا فاته طول الأناة بفرصة % إذا ضاع أمر العاجز المتخاذل % PageV01P3623 54(@)(@@) % وأنت جدير بعده بسفال % إذا كاتب لم يمتثل رأي صاحب % % 55(@)(@@) % طريقته المثلى فأي مثال % % أإياي تستدعي نوائر شرة % 56(@)(@@) % مللت صفاء العيش كل ملال % متى أنت صاليت العتاة مساخطي % % 57(@)(@@) % فليس يصاليك الجحيم مصالي % % إذا كنت لم تلبس لبوس تجمل % 58(@)(@@) % بعرف فلم تلبس لبوس جمال % فهل أنت إلا لعنة لمعاين % % 59(@)(@@) % ومختبر نصب لكل نضال % أتبغي إلى الشنع التي فيك سادسا % 60(@)(@@) % وفيك من السؤات خمس خصال % % بغاء وتشوية ونوك ولكنة % 61(@)(@@) % وشؤم كملت الشؤم كل كمال % وماصلح الرأس الذي أنت حامل % 62(@)(@@) % أبا حسن إلا لقفد قذال % أضيف بني عبدون أحسن تزودا % 63(@)(@@) % ولاتهتم فيهم بطعن مبال % فليس الزنا في دينهم بمحرم % % PageV01P3624 64(@)(@@) % وليس القرى في حكمهم بحلال % وما حرمة يؤوونها بمصونة % 65(@)(@@) % ولا درهم يوعونه بمذال % حلفت على استخفافه بي أنه % 66(@)(@@) % منيخ بأثقال عليه ثقال % أتدعم بالعرج المشائيم دولة % 67(@)(@@) % يراها مليك الناس ذات جلال % أبى الله إسناد الهضاب وحملها % % 68(@)(@@) % بغير هضاب مثلها وجبال % إذا ارتضع الدنيا أخو اللؤم وحده % 69(@)(@@) % فذاك رضاع مؤذن بفصال % ن % % PageV01P3625 البحر : - 1(@)(@@) % لي صديق صامتي % قحطبي باحتياله % 2(@)(@@) % أكرم الجنة والإن % % س على قلة ماله % % 3(@)(@@) % لا أسميه عساه % لا يراءى بفعاله % % PageV01P3626 البحر : - 1(@)(@@) % قالوا هجاك أبو حفص فقلت لهم % % بالله أدفع ما لاتدفع الحيل % 2(@)(@@) % ألا لئيم جزاه الله صالحة % يهجوه عني فبي عن عرضه كسل % PageV01P3627 البحر : - 1(@)(@@) % إذا احتضر الشح النفوس فخالد % هناك جواد النفس بالنفس والأهل % PageV01P3628 البحر : - 1(@)(@@) % رأيت فقاح الناس للخرج وحده % % وفقحته الشتراء للخرج والداخل % 2(@)(@@) % أخالد يابن الخالدات مخازيا % رويدك تدركك القوافي على رسل % 3(@)(@@) % ستدعى حليما بعد جهل وشرة % وكم جاهل علمته الحلم بالجهل % PageV01P3629 البحر : - 1(@)(@@) % أخالد يابن الخالدات مخازيا % خلود الرواسي 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms832# من هضاب مواسل % 2(@)(@@) % لقد حل حب الأير منك بمنزل % رفيع فما يسطيعه عذل عاذل % 3(@)(@@) % هوى كالجوى ألهاك عن كل لذة % وعن كل مكروه من الأمر نازل % 4(@)(@@) % فكيف وأنى ليت شعري فرغت لي % % وقد كنت في شغل بدائك شاغل % % 5(@)(@@) % أراني عظيم القدر عندك بعدها % % وإن كنت تبغيني ضروب الغوائل % 6(@)(@@) % إذا الناس قاموا في القيامة حسرا % فهمك إذ ذاك اعتراض الفياشل % % 7(@)(@@) % كأني أرى تجوال عينيك لم ترع % بروع ولم تشغل بتلك الشواغل % 8(@)(@@) % تلاحظ سوءات الرجال وقد بدت % هنالك ترميها بعيني مغازل % 9(@)(@@) % ترى كل هول في القيامة نزهة % سرورا ولهوا باجتلاء الغرامل % % 10(@)(@@) % وقد ذهلت عن طفلها كل مطفل % رؤوم وألقت حملها كل حامل % PageV01P3630 البحر : - 1(@)(@@) % إني رأيتك حالما أنشدتني % % بيتين قاداني عليك على أمل % 2(@)(@@) % أيعوذني متعوذ من دهره % فأعيذ مالي بالمعاذر والعلل % 3(@)(@@) % إني لأستحي المكارم أن أرى % % مالا يصان وحر وجه يبتذل % % PageV01P3631 البحر : - 1(@)(@@) % قطع الله عذر من أبواه % هاشميان أن يكون بخيلا % % 2(@)(@@) % خرجا سالمين من كل ذم % % وأحالا عليه ذما ثقيلا % % PageV01P3632 البحر : - 1(@)(@@) % إذا ما مدحت الناقصين فإنما % % تذكرهم مافي سواهم من الفضل % 2(@)(@@) % فتهدي لهم حزنا طويلا وحسرة % وإن منعوا منك النوال فبالعدل % PageV01P3633 البحر : - 1(@)(@@) % قلبت بطون الشعر قبل ظهوره % فلم أر قولا لم تقدمه بالفعل % 2(@)(@@) % وما استطرف الأقوام لي فيك مدحة % لأني بما علمتهم بك من جهل % 3(@)(@@) % أعرفهم منك الذي يعرفونه % % وأسلافهم من قبل شعري ومن قبلي % % 4(@)(@@) % فيعرض عنه السامعون وإنني % % لذو المذهب المحمود والمنطق الجزل % PageV01P3634 البحر : - 1(@)(@@) % لاتغش إلا ملكا في منزله % يعرض في مشربه ومأكله % 2(@)(@@) % وفي تلهيه وفي تعلله % % ومايريه الحق من تفضله % 3(@)(@@) % على أخ يأوي إلى تطوله % % عن أمه وعرسه وعدله % % 4(@)(@@) % لاعبده مستمكن من مقتله % ولا ملاهيه لدى تنقله % 5(@)(@@) % ومن عجيب الأمر بل من معضله % % مخول يصغي إلى مخوله % % 6(@)(@@) % يوهم بالصبر على تدلله % إن به داهية في أسفله % % 7(@)(@@) % ماذاك من أمر الفتى بأجمله % % ولا بأسناه لدى تأمله % % PageV01P3635 البحر : - 1(@)(@@) % قذفك بالفحشاء من لم يكن % يعرف بالفحشاء تضليل % 2(@)(@@) % بل سوءة غابت فأحضرتها % % جهلا وغرتك الأباطيل % 3(@)(@@) % وأنت لا شك أخو ريبة % بادر أن يبدره القيل % 4(@)(@@) % ينحل 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms833# مافيه ليخفى له % % وقل ما تغني التعاليل % % 5(@)(@@) % هيهات لن يرجع ماقد مضى % % قد سبقت فيك الأقاويل % 6(@)(@@) % إن التي تبغي مواراتها % % كأنها في الليل قنديل % 7(@)(@@) % صاح بما جمجمت من سوءة % ذكر وتوراة وإنجيل % 8(@)(@@) % وليس تأويل أخي شبهة % لكنه نص وتنزيل % PageV01P3636 البحر : - 1(@)(@@) % أحمل الوزر والأمانة والدي % % ن جميعا وكل ثقل ثقيل % 2(@)(@@) % غيركم يا بني ثوابة يامن % ليس شيء لبغضهم بعديل % 3(@)(@@) % لو تسمون بالذي تستحقو % % ن خصصتم بأحرف التثقيل % 4(@)(@@) % شهد الله أنكم كل شيء % % بارد جامد ثقيل وبيل % PageV01P3637 البحر : - 1(@)(@@) % يحجبني عمرو وقد عاش حقبة % حبيبته خف ومركبه نعل % PageV01P3638 البحر : - 1(@)(@@) % تلون أخلاق الفتى من ملاله % ووشك ملال المرء شر خلاله % 2(@)(@@) % وإني لمشتاق إلى ظل صاحب % مشوق إلى تشبيه حالي بحاله % 3(@)(@@) % إذا الدهر أعطاني رأى مثل رأيه % فباراه جودا واقتدى بفعاله % % 4(@)(@@) % وإن ضن دهر مرة بعطية % تناولني في ضيقتي بنواله % % 5(@)(@@) % إلى أن يسد الله فقري فلا يرى % % صديقي في حالي مسدا لماله % 6(@)(@@) % وأكره للسمح اليدين اعتلاله % على صاحب قد عده من عياله % 7(@)(@@) % أمستكثر لي أن منحت منيحة % أخ لا أرى الدنيا تفي بقباله % % 8(@)(@@) % حمى جانبا قد كان أرعاه مرة % لأن سحابا بلني ببلاله % % 9(@)(@@) % وقد كان أحجى أن يباري في الندى % % فيسقيني من مرويات سجاله % 10(@)(@@) % ومن ضن أن أعطى سواه كمن رأى % % جمال أخيه كافيا من جماله % PageV01P3639 11(@)(@@) % وما ترك علق منفس كاقتنائه % % ولا رفض فعل صالح كامتثاله % % 12(@)(@@) % أبى لأبي سهل سوى الطول أنه % % يلاقي اعتلال المال دون اعتلاله % 13(@)(@@) % سيعطفه أني محق وأنه % % حكيم وأن العدل من حال باله % 14(@)(@@) % وما مثل إسماعيل جار قضاؤه % % وعدل الفتى في حكمه كاعتداله % PageV01P3640 البحر : - 1(@)(@@) % أيها السيد الذي اختاره السي % يد إلفا وموضعا للخلال % 2(@)(@@) % لم يوفقك للموفق إلا ص % % دق ذاك التوفيق والإقبال % 3(@)(@@) % جمع الله فيك للناصر الد % % ين خصالا حميدة في الخصال % 4(@)(@@) % فيك للناظرين والقلب حظ % ظان على رغم حاسد مغتال % 5(@)(@@) % منظر معجب من الحسن حال % تحته مخبر من الفضل حالي % % 6(@)(@@) % وإذا ما الجليس حلي هاتي % % ن أبى أن يباع بالأبدال % 7(@)(@@) % أنت مرأى ومسمع كل مافي % % ك مسل لهم ذي الهم 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms834# جالي % % 8(@)(@@) % فيك جد لمن أجد وهزل % لا كهزل المهازل البطال % 9(@)(@@) % شهد الله والأمير جميعا % والوزير الخبير بالأحوال % % 10(@)(@@) % أنك الصاحب الخفيف على القل % % ب وإن كنت راجح المثقال % % PageV01P3641 11(@)(@@) % لست في ناظر قذاه ولا أن % % ت على خاطر من الأثقال % % 12(@)(@@) % يصطفيك الأمير للأنس والعو % ن على الحادث العياء العضال % 13(@)(@@) % وحقيق كلاكما بأخيه % % شكل أهل الكمال أهل الكمال % 14(@)(@@) % فليالي أميرنا بك في الطي % % ب كأسحارها ذوات الظلال % % 15(@)(@@) % ولأيام دهره بك روح % مثل روح الغدو والآصال % 16(@)(@@) % ليس فيهن وقدة تلفح الأو % % جه بل كلهن من أظلال % 17(@)(@@) % لم يعبهن عند ذي الجهل إلا % أن ساعاتهن غير طوال % 18(@)(@@) % إن أراد الحديث منك تنكب % % ت سبيل الإخباث والإقلال % 19(@)(@@) % وتحدثت مكثرا ومطيبا % بأحاديث جمة الأشكال % 20(@)(@@) % من طراز الملوك فيها الفكاها % % ت وفيها سوائر الأمثال % PageV01P3642 21(@)(@@) % يجتلبن النشاط من أبعد البع % % د ويدفعن في نحور الملال % 22(@)(@@) % كنسيم الرياض في غلس الليل % % إذا ساقه نسيم الشمال % % 23(@)(@@) % ثم تأتيه بالحديث فتأتي % % برحاه على سواء الثفال % 24(@)(@@) % ذا مقال موافق لمقام % ومقام موافق لمقال % % 25(@)(@@) % عن لسان أرق حدا من السي % % ف دليل على طباع زلال % % 26(@)(@@) % حامل نغمة يشبهها السم % % ع هديل الحمام فوق الهدال % % 27(@)(@@) % رافدتها إشارة ألبستها % % كل نور وكل رقراق آل % 28(@)(@@) % ببنان كأنهن مدار % وأساريع في دماث الرمال % 29(@)(@@) % فلذك الحديث حسن الملاهي % % وله دونهن فضل الجلال % 30(@)(@@) % فهو شيء تلذه أذن السا % % مع من ذي هدى ومن ذي ضلال % PageV01P3643 31(@)(@@) % كالسماع الذي يحرك للهي % ياب إطرابهم وللبخال % 32(@)(@@) % فيهشون عند ذلك للجو % % د على القانعين والسؤال % 33(@)(@@) % ويراحون للقتال لدى الحر % % ب ويغشون هائل الأهوال % 34(@)(@@) % ذاك أغرى بك الأمير فأصبح % % ت بيمنى يديه دون الشمال % 35(@)(@@) % وله فيك آلتان لحرب % ولكيد كهمة المؤتال % % 36(@)(@@) % قفل سر أخوه مفتاح رأي % % والمفاتيح إخوة الأقفال % 37(@)(@@) % لك إطراقة إذا ناب خطب % هي أدهى من سورة الأبطال % 38(@)(@@) % يستثير المكايد الصمع منها % % أي صل هناكف العرزال % 39(@)(@@) % أبصر الفرصة الأمير لعمري % % فيك وهو المسدد الأفعال % 40(@)(@@) % وتجلى بعين صقر أبو الصق % % ر على رأس مرقب متعالي % % PageV01P3644 41(@)(@@) % فرأى فيك ما رأى مجتبيه % فاجتبي منك حظه غير آل % 42(@)(@@) % فالتقى 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms835# فيك حسن رأي أمير % ووزير كلاهما خير والي % % 43(@)(@@) % فإذا ماذكرت بالغيب قالا % ذاك حقا يتيمة اللئال % 44(@)(@@) % يا ثمال المؤملين أبا إس % % حاق عند انقطاع كل ثمال % 45(@)(@@) % أنت ذاك الذي عهدتك قدما % لايغاليك في المعالي معالي % % 46(@)(@@) % لو تجاريك في مكارمك الري % % ح لخيلت معقولة بعقال % 47(@)(@@) % رب ذي حاجة أرقت لها لي % % لا طويلا وبات ناعم بال % 48(@)(@@) % نام عما عناه منها وما نم % ت ولو نمت بات في بلبال % 49(@)(@@) % فلأكن بعض من غرسته بين فض % % ل شكريك يا أخا الإفضال % 50(@)(@@) % سيرى كل شاكر لك عرفا % أنني سابق له وهو تال % PageV01P3645 51(@)(@@) % لم أكلفك أن تكون شفيعا % لي إلا إلى امرىء مفضال % 52(@)(@@) % أبلج الوجه كالهلال بل البد % % ر بل الشمس بل فقيد المثال % 53(@)(@@) % لايضاهيه في المحاسن إلا ما % % تسديه كفه من فعال % 54(@)(@@) % أريحي يعطي العطية في العط % % لة أضعاف أختها وهو وال % 55(@)(@@) % محسن مجمل وليس ببدع % ذاك من مثله ولا بمجال % 56(@)(@@) % ذانك الحسن والجمال حقيقا % ن بكنه الإحسان والإجمال % 57(@)(@@) % أحسن الله خلقه فبداه % % في انتساخ لحسنه وامتثال % 58(@)(@@) % يستملان فعله من كتاب % خط في وجهه بلا استملال % 59(@)(@@) % ليس ممن إذا ألح شفيع % أخلق الوجه عنده بابتذال % 60(@)(@@) % من رجال توقلوا في المعالي % % بالمساعي توقل الأوعال % PageV01P3646 61(@)(@@) % بل ترقى إلى العلا طالبوها % % وتدلى على العلا من معالي % % 62(@)(@@) % يتبارى إليه وفدان شتى % % وفد شكر يحث وفد سؤال % 63(@)(@@) % بل عطاياه لاتزال تبارى % % وافدات إلى ذوي الآمال % 64(@)(@@) % بالغات إلى المقصر عنها % % نائلات بعيد كل منال % 65(@)(@@) % يرقد الطالبون وهي إليهم % % أرقات الوجيف والإرقال % % 66(@)(@@) % رحلت نحو من تثاقل عنها % % وكفته مؤونة الترحال % % 67(@)(@@) % لا تزل عنه نعمة لو أزيلت % % لم تجد عنه وجهة للزوال % % 68(@)(@@) % فالق في حاجتي أخاك أبا الصق % % ر مجدا مشمر الأذيال % 69(@)(@@) % فهو مستعذب لقاءك إي % ياه يراه كالبارد السلسال % 70(@)(@@) % متصد لحاجة لك قد أش % % فى جداه على شفا منهال % % PageV01P3647 71(@)(@@) % ومتى ما لقيته كان غيثا % أمرته الجنوب بالتهطال % 72(@)(@@) % ليس من كنت ريحه ببعيد % من سماء تبله ببلال % 73(@)(@@) % وامرؤ يستقي بجاهك أه % % ل بسجال روية وسجال % 74(@)(@@) % لك وجه مشفع من رآه % % زاح عنه 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms836# هناك كل اعتلال % 75(@)(@@) % ينزل القطر من ذرى المزن في ال % % محل على كل جردة ممحال % 76(@)(@@) % ليس ينفك للشفاعة مبذو % % لا وما إن يزاد غير صقال % 77(@)(@@) % وكذاك الكريم سئال حاجا % % ت سواه وليس بالسئال % 78(@)(@@) % صنت نفسا أذلت في العرف منها % % لا عدمناك من مصون مذال % 79(@)(@@) % كم منيع الجدا شفعت إليه % % لخليل رأيته ذا اختلال % 80(@)(@@) % جاد إذ صافحت يداك يديه % % ورأى وجهك العظيم الجلال % PageV01P3648 81(@)(@@) % ففككت البخيل من غل بخل % وفككت الخليل من سوء حال % 82(@)(@@) % فإذا أنت قد فككت أسير % % ين وقدما فككت من أغلال % 83(@)(@@) % ومنحت الذميم منحة حمد % ومنحت العديم منحة مال % 84(@)(@@) % فإذا أنت قد أنلت نوالي % % ين وقدما أنلت كل نوال % % 85(@)(@@) % قائل المدح فيك بدءا وعودا % غير مستكره ولامحتال % 86(@)(@@) % بل إذا قاله أتته المعاني % % والقوافي تنثال أي انثيال % 87(@)(@@) % فابق مابقيت مآثرك الغر % ر فقد خلدت خلود الجبال % % 88(@)(@@) % أنا من أتبع الولاء الموالا % % ة فلا تنس حق مولى موالي % % PageV01P3649 البحر : - 1(@)(@@) % تجلد عمر وللهجاء تجملا % وما زلت أرعى حرمة المتجمل % 2(@)(@@) % فأقسمت لا أهجوه ماعشت بعدها % % وقد تسفر الحسناء للمتأمل % 3(@)(@@) % ومن عادتي تكذيب ظن محاذري % % كما عادتي تصديق ظن المؤمل % 4(@)(@@) % فقولا لعمرو أنت حر سيابه % % لشيمة حر محسن الحلم مجمل % 5(@)(@@) % فإن هو لم يحفل بنقمي ونعمتي % % فعندي له عود المتم المكمل % 6(@)(@@) % هجاء إذا ما استافه قبل ذوقه % رأى فيه شوبا من ذعاف المثمل % 7(@)(@@) % ولست أراه لا يبالي وإن بدا % % تضرمه في ظاهر متعمل % 8(@)(@@) % رأيت بعينيه الكذوبين مايرى % % متى حلت كياتي له لم يململ % % PageV01P3650 البحر : - 1(@)(@@) % عدلت عن الصبا صعري وميلي % % وشمرت الخطوب فضول ذيلي % % 2(@)(@@) % وأوضح لي المشيب سبيل رشد % وكنت كخابط عشواء ليل % % PageV01P3651 البحر : - 1(@)(@@) % كسل الأير أو ينشطه أير % وكذا لم تأنس الأشكال % 2(@)(@@) % فهو يعلو طورا ويعلوه طورا % قرنه هكذا البقاع تدال % PageV01P3652 البحر : - 1(@)(@@) % حي المعاهد والمنازل % المقفرات بل الأواهل % 2(@)(@@) % بدلن آراما خوا % % ذل بعد آرام خواذل % 3(@)(@@) % حركن شجوك للسؤا % % ل وما أحرن جواب سائل % 4(@)(@@) % فابعث بهن من الدمو % % ع وقف بهن من الرواحل % % 5(@)(@@) % وسل الملائح بالملا % % ئح والعطابل بالعطابل % 6(@)(@@) % اللائي أشبهن الغصو % % ن المستقيمات الموائل 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms837# % 7(@)(@@) % وكملن كل وسامة % في غير أسنان كوامل % 8(@)(@@) % حلين حليا خلقة % مجبولة لانحل ناحل % 9(@)(@@) % فإذا عطلن من الحلي % % ي فلسن منه بالعواطل % % 10(@)(@@) % وإذا غدون يمسن في % % تلك الغلائل والمراسل % PageV01P3653 11(@)(@@) % غارت عليهن الثدي % ي هناك من مس الغلائل % 12(@)(@@) % وإذا لبسن خلاخلا % كذبن أسماء الخلاخل % % 13(@)(@@) % تأبى تخلخلهن أس % وق مرجحنات بخادل % % 14(@)(@@) % لكنهن بخائل % لهفي على تلك البخائل % 15(@)(@@) % قد غلظت تلك القلو % % ب ولطفت تلك الأنامل % 16(@)(@@) % لي شاغل في حبهن % ن عن التي تدعى بشاغل % % 17(@)(@@) % بظراء تمسخ لامها % % راء إذا رأت الفياشل % % 18(@)(@@) % ولربما جنت لها % % فترى عواليها سوافل % % 19(@)(@@) % عجبا لبرد غنائها % % وغناؤها ثكل الثواكل % 20(@)(@@) % ما باله كالزمهري % % ر مهيجا وجع المفاصل % % PageV01P3654 21(@)(@@) % هلا استحر لأنه % % ثكل وللشبق المداخل % 22(@)(@@) % حلقت ذوائبها التي % % خلقت لصناع المناخل % % 23(@)(@@) % بل لحية الرجل الذي % % أضحى بها جم البلابل % % 24(@)(@@) % ماذا يضبع من الوسا % % ئل في هواها والرسائل % % 25(@)(@@) % لكن شهوته اللبا % % ء فما يحب سوى الحوامل % % 26(@)(@@) % وهي التي قد أقسمت % أن لا تعد مع الحوائل % % 27(@)(@@) % أتراك تسلم يا سلا % % مة أن تكون من الثياتل % % 28(@)(@@) % وقد احتملت بها قرو % % نا لا ينوء بهن حامل % 29(@)(@@) % كنت القصير فقد غدو % ت بطولهن من الأطاول % % 30(@)(@@) % لا تخلون بشاغل % حتى تعدلها قوابل % PageV01P3655 31(@)(@@) % إن التي علقتهاقالوا تعاهر في الدورب فقلت كلا بل تعاظل % تزني الفرائض والنوافل % 31(@)(@@) % قالوا تعاهر في الدور % % ب فقلت كلا بل تعاظل % 32(@)(@@) % لكن أراك تحبها % % حب المشاكل للمشاكل % % 33(@)(@@) % أشبهتها في برد أعلا % % ها اوفي حر الأسافل % 34(@)(@@) % كم قد سترت معايبا % لمعت بها فيك المخائل % % 35(@)(@@) % ووقفت دونك للخصو % % م بموقف الخصم المجادل % % 36(@)(@@) % قالوا صديقك سيد % بادي النباهة غير خامل % 37(@)(@@) % نمت بذاك شواهد % فيه أنم من الجلاجل % 38(@)(@@) % ولرب عيب قد تبي % ين بالشواهد والدلائل % % 39(@)(@@) % صدقوا وماكذبوا علي % ك فلم أناضح أو أناضل % PageV01P3656 40(@)(@@) % إني لأعلم أنك المطعو % % ن في غير المقاتل % 41(@)(@@) % ما إن تزال فريسةوإن استترت بقحبة لك عند ناكتها طوائل بذيء % % في خلوة تحت الكلاكل % 41(@)(@@) % وإن استترت بقحبة % لك عند ناكتها طوائل % % 42(@)(@@) % أنشأت تخدعنا وأم % رك بين بادي الشواكل % % 43(@)(@@) % وعدلت من طبل إلى عو % % د وأنت من الطوابل 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms838# % 44(@)(@@) % بل ليت كنت من الطوا % % بل بل أنت من سقط الزوامل % % 45(@)(@@) % وخضبت خنثك بالتغز % زل والبغاء هناك ناصل % 46(@)(@@) % مثل التي أضحت تكا % % تم حملها والضرع حافل % % 47(@)(@@) % نتنحل المتعشقا % % ت وأنت بغاء حلاحل % % 48(@)(@@) % أنى يصلنك لا وصل % ن ولو بقين بلا مواصل % % PageV01P3657 49(@)(@@) % أنت الذي فاق الورى % % في القبح من حاف وناعل % 50(@)(@@) % ولقد شهدنك راكبا % فوق الغلاط من الغرامل % % 50(@)(@@) % وأرى غناءك في المجاوتناك غير مساتر للغانيات ولا مخاتلبذيء فعلام يمنحن الهوى غير الجميل ولا المجامل ولقد شهدنك راكبا فوق الغلاط من الغرامل تبغى بها تقويم أيرك وهو كالسكران مائل فبصرن فيك بفارس يغشى الحروب ولا يقاتل % لس مثل ذكرك في المحافل % 50(@)(@@) % وتناك غير مساتر % للغانيات ولا مخاتل % 50(@)(@@) % تبغى بها تقويم أي % رك وهو كالسكران مائل % % 50(@)(@@) % فبصرن فيك بفارس % يغشى الحروب ولا يقاتل % 50(@)(@@) % فعلام يمنحن الهوى % % غير الجميل ولا المجامل % % 51(@)(@@) % وأراك فيه ناهقا % وتظن أنك فيه صاهل % 52(@)(@@) % وتراك فيه فارسا % والحق أنك فيه راجل % 53(@)(@@) % وتراك فيه عاليا % والحق أنك فيه سافل % PageV01P3658 54(@)(@@) % وأراك تعمل صالحا % تعتد فيه أضل عامل % 55(@)(@@) % أكفلت نغلي شيخة % ولدتهما من غير طائل % 56(@)(@@) % ولدتهما من غير شي % % خك ذي الفضائل والفواضل % 57(@)(@@) % وكذا الكريم ابن الكرا % % م يعول أيتام القبائل % % 58(@)(@@) % اذهب فإنك بعدها % % كهف اليتامى والأرامل % 59(@)(@@) % أقسمت أنك جاهل % والممتري في ذاك جاهل % % 60(@)(@@) % أتعول ويحك إخوة % لا من أبيك وأنت غافل % % 61(@)(@@) % ويريبني كل الإرا % % بة منك تأنيث الشمائل % % 62(@)(@@) % قد كان شيخك باسلا % بطلا فمالك غير باسل % % 63(@)(@@) % إني لأحسب أن أم % مك لبست حقا بباطل % % PageV01P3659 64(@)(@@) % واغتالت الشيخ الشقي % ي فقيرته وهو غافل % % 65(@)(@@) % خذها إليك تحية % تلقى المعاطس بالجنادل % % 66(@)(@@) % يامعشر السفهاء وال % % متمردين ذوي المجاهل % 67(@)(@@) % الموت يغشاها وخاطر قلبها % % ذكر الأيور كأنها لم تشغل % % 67(@)(@@) % لو أمهلتك مدى ثوائك في استها % % لسلمت لكن داؤها لم يمهل % 67(@)(@@) % وراتك ايسر مهلكا ورزية % % من دعستين بأير عير أغرل % 67(@)(@@) % فاعصب ملامة ناظريك برأسها % % لا بالإله وبالنبي المرسل % 67(@)(@@) % ما استوجبا منك الكفور بجرمها % % فدع الهوادة في الحكومة واعدل % 67(@)(@@) % سقيا لأمك من صديد جهنم % % لا من صبيب البارق المتهلل % 67(@)(@@) % لمضت من 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms839# الدنيا وما أسفت على % % مستمتع من مشرب أو مأكل % PageV01P3660 67(@)(@@) % إلا مباضعة العبيد فإنها % % عنها وعن خطراتها لم تذهل % % 67(@)(@@) % واستخلفتك وما نسلت مكانها % % فابذل لناكتها عجانك وابذل % 67(@)(@@) % ولقد حبوتهم بفاعلة التي % % ذاعت لها مدح الجواد المفضل % 67(@)(@@) % أزناة باب الشام طرا أبشروا % % من بنت شاعركم بخير مقبل % 67(@)(@@) % خلفت عليكم أمه وتكفلت % % بكم وعدة عشرها لم تكمل % 67(@)(@@) % أأبي يوسف دعوة من حاقر % مستصغر يأبى دعاءك من عل % 67(@)(@@) % خذها إليك تذود غاشية الكرى % % عن أهلها وتضيق رحب المنزل % 67(@)(@@) % لا تسخطن على الإله فإنما % % أعمال طعن فحولها بالفيشل % % 67(@)(@@) % ولقد وزعت الشعر عنك تعظما % وتنزها وكففت غرب المقول % 67(@)(@@) % وأنا المقابل في أكاسر فارس % وابن الملوك الصيد غير تنحل % % PageV01P3661 67(@)(@@) % وتخيلك الماء النقاح كأنه % % في فيك مازجه نقيع الحنظل % 67(@)(@@) % رفعوا يفاعي كابرا عن كابر % حتى استقل إلى السماك الأعزل % % 67(@)(@@) % أنذرتكم قبل الخسو % % ف بما ترون من الزلازل % 67(@)(@@) % أسألت رسم الدار أم لم تسأل % % دمنا عفت فكأنها لم أتحلل % 67(@)(@@) % درسا براهن البلى بري الضنا % % جسمي لبين قطينها المتحمل % 67(@)(@@) % فلو استطاعت إذ بكيت دثورها % % لبكت نحولي بالدموع الهمل % 67(@)(@@) % ولقد عهدت عراصها مأنوسة % أيام تعهدني كسيف الصيقل % % 67(@)(@@) % رود الشبيبة لا أعاصي لذة % تدعو هواي ولا أدين لعذلي % % 67(@)(@@) % وإذا أشاء غدوت غير منهنه % فأروح مقتنص الغزال المطفل % % 67(@)(@@) % في حيث يقصر باع كل مساور % دوني ويحسر ناظر المتأمل % % PageV01P3662 67(@)(@@) % فأبت جوامح للقريض غوالب % جاش الضمير بهن جيش المرجل % 67(@)(@@) % حرى تسكن نعظ ألف حزور % شبق وغلة دائها لم تبلل % % 67(@)(@@) % فضلا له بك يا ابن طاحنة الرحى % % رومي وبيتك بالحضيض الأسفل % % 67(@)(@@) % يا بن السفاح شهادة مقبولة % مثل الشهادة بالكتاب المنزل % 67(@)(@@) % إن التي ولدتك تخبر أنها % % حملتك من نطف لعدة أفحل % % 67(@)(@@) % بظراء لو نطحت بمقدم بظرها % % ثهلان حلحله ولم يتحلحل % 67(@)(@@) % بخراء لو نكهت على صم الصفا % % صدعت بنكهتها متون الجندل % % 67(@)(@@) % ذفراء لو بلت برشح أديمها % % جسد امريء لم ينق منه بجدول % 67(@)(@@) % خضراء لون الريق لو نفثت به % % ميثاء ألقحها الحيا لم تبقل % % 67(@)(@@) % بؤسي الزمان وليس يبرح آخر % من صرفه يعفو محاسن أول % % PageV01P3663 البحر : - 1(@)(@@) % ليس الكريم من اشترى 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms840# بنواله % حمد الرجال وإن أنال جزيلا % % 2(@)(@@) % واتخذ حشوة واعف جعرا % % ك من الطعن بالأيور قليلا % % 2(@)(@@) % لا تلمهم فإن لومك لا ين % % فع وآرفق باكلك الطفشيلا % % 2(@)(@@) % وتغضبت من كلام أناس % أكثروا إذ ضرطت قالا وقيلا % % 2(@)(@@) % خفيف لمت يا وهب اهل دهرك فيما % % أنت أوجدتهم إليه السبيلا % % 2(@)(@@) % يا ليت شعري عن وهب وفقحته % وكيف عاتبها في الحش حين خلا % % 2(@)(@@) % بئس التحية حياها الوزير ضحى % % والحفل من سروات القوم قد حفلا % % 2(@)(@@) % ثم استمرت فصارت في البلاد له % % كأنها ارسلت من دبره مثلا % % 2(@)(@@) % حيا أبو حسن وهب أبا حسن % بضراطة طيرت عثنونه خصلا % % 2(@)(@@) % لكنه من جاد جود طبيعة بسيطحيا أبو حسن وهب أبا حسن بضراطة طيرت عثنونه خصلا بذيءثم استمرت فصارت في البلاد لهكأنها ارسلت من دبره مثلابذيءبئس التحية حياها الوزير ضحى والحفل من سروات القوم قد حفلا يا ليت شعري عن وهب وفقحتهوكيف عاتبها % % ورأى الفعال من الفعال جميلا % % PageV01P3664 البحر : - 1(@)(@@) % أبوه بلبل ضاو ويكنى % % أبا صقر فكنيته محاله % 2(@)(@@) % يجود بعرضه للشتم عفوا % ويبخل بالقلامة والخلاله % 3(@)(@@) % وللأوغاد أموال تراها % % مصونات بأعراض مذاله % % 4(@)(@@) % ولم يك من نماه أب كريم % ليبذل عرضه ويصون ماله % % 5(@)(@@) % تمحل نسبة أعيت أباه % % وكان المرء يعجز لا المحاله % % PageV01P3665 البحر : - 1(@)(@@) % إذا شاخ قوم شيبوا وابن بلبل % تشيبن لما شاخ بالتنحل % 2(@)(@@) % ولا جور إلا جوره في اكتنائه % % أبا الصقر أنى ذاك وهو ابن بلبل % PageV01P3666 البحر : - 1(@)(@@) % قل لابن بلبل لم غلطت % وأنت شهم قلقل % 2(@)(@@) % أنى يكون أبا الصق % % ر من أبوه بلبل % 3(@)(@@) % نسب يناقض كنية % ما مثل ذا بك يجمل % % 4(@)(@@) % أغفلت عما فيهما % % ما عذر مثلك يقبل % PageV01P3667 البحر : - 1(@)(@@) % شهر الصيام مبارك لكنما % % جعلت لنا بركاته في طوله % 2(@)(@@) % سافر بفكرك منه في نأي المدى % % ممدوده ممطوله موصوله % 3(@)(@@) % من كان يألفه فكيف خروجه % عني بجدع الأنف قبل دخوله % 4(@)(@@) % إني ليعجبني تمام هلاله % وأسر بعد تمامه بنحوله % 5(@)(@@) % شهر يصد المرء عن مشروبه % مما يحل له ومن مأكوله % 6(@)(@@) % لا أستثيب على قبول صيامه % حسبي تصرمه ثواب قبوله % PageV01P3668 البحر : - 1(@)(@@) % سؤلي أن توقن أني امرؤ % قد امحي من صدره الغل 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms841# % 2(@)(@@) % كيلا ترى أني مستأهل % يوما عصيبا ماله ظل % 3(@)(@@) % وأنت في حل وإن نالني % % منك الذي لا يسع الحل % 4(@)(@@) % لا يغضب العبد على ربه % ويغضب الصاحب الخل % 5(@)(@@) % ولست بالصارف عنك الهوى % % والرأي أنت الدق والجل % 6(@)(@@) % والإل والذمة قد أكدا % % فلترقب الذمة والإل % % 7(@)(@@) % قد كان برسام وبحرانه % % فلا يكن بعدهما سل % PageV01P3669 البحر : - 1(@)(@@) % دع لباك رسومه وطلوله % ولحاد ركابه وحموله % 2(@)(@@) % ولغاو سفاهه وصباه % وللاه سماعه وشموله % 3(@)(@@) % وإذا ما صمدت للشعر يوما % فتيمم فصوله لا فضوله % % 4(@)(@@) % إنما أحمد المحمد شخص % من سماح ونجدة مجبوله % 5(@)(@@) % فارس المجد لم يزل غير نكر % يركب المجد صعبه وذلوله % % 6(@)(@@) % فلسؤاله إذا ما استماحو % % ه عطاء سيوبه المبذوله % % 7(@)(@@) % ولأعدائه إذا ما أرادو % % ه بكبد سيوفه المسلوله % % 8(@)(@@) % شغل المجد قلبه ويدي % % ه والقوافي بمدحه مشغوله % % 9(@)(@@) % سهلته ووعرته سجايا % % خالطتها وعورة وسهوله % % 10(@)(@@) % لم نجدها مذمومة قط في النا % % س ولكن محمودة معذوله % % PageV01P3670 11(@)(@@) % لم يزل غرة يتيه بها الده % % ر إذا ما الكرام كانوا حجوله % % 12(@)(@@) % أيها السيد الذي ليس تنفك % ك أياديه عندنا موصوله % % 13(@)(@@) % فهي معروفة لدينا وإن كا % % نت لديه مجحودة مجهوله % % 14(@)(@@) % نعم في الوجوه يقرها النا % % س جميعا منقوطة مشكوله % % 15(@)(@@) % شهد الله والملائكة الأبرا % % ر طرا شهادة مقبوله % % 16(@)(@@) % أنك الحاكم الذي أوتي الحك % % م به حكمه فأعطي سوله % % 17(@)(@@) % وأصابت آراؤه مفصل الحق % ق فكم خطة به مفصوله % 18(@)(@@) % لبست تاج فخرها بك بغدا % % د وأثواب زينها المصقوله % % 19(@)(@@) % ثبت الله دولة لك أضحت % % كل بلوى بعدلها معدوله % % 20(@)(@@) % فالرعايا محمية في حماها % % والمراعي مطلولة موبوله % % PageV01P3671 21(@)(@@) % ما تزال الدماء مضمونة في % % ها وأرزاق أهلها مكفوله % % 22(@)(@@) % عاقني أن أطيل أنك تستغ % % رق عرض الثناء مجدا وطوله % % 23(@)(@@) % وارتياعي في كل يوم من الإز % % عاج عن منزل أحب نزوله % % 24(@)(@@) % فيه عافاني الإله من الشك % % و وفك البلاء عني كبوله % % 25(@)(@@) % بعد جهد حملت منه ضروبا % ليس أثقالهن بالمحموله % % 26(@)(@@) % ومصاب بشقة الروح مني % % ضمن الجسم سقمه ونحوله % % 27(@)(@@) % بأخي بل بوالدي بل بنفسي % % ليت نفسي من قبله مثكوله % % 28(@)(@@) % رابني صائني ظهيري وزيري % % غالني الدهر فيه لقي غوله % % 29(@)(@@) % لم أرثه سوى شجاة 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms842# أرتني % % عسكر الموت رجله وخيوله % % 30(@)(@@) % وإليك الشكاة منها ومن أش % % ياء تبتز ذا الحجى معقوله % % PageV01P3672 31(@)(@@) % بعضها أن عزمة منك أقذت % مقلتي فهي بالقذى مكحوله % % 32(@)(@@) % لا تذوق المنام إلا غرارا % حسرتي فيه غير ما معسوله % % 33(@)(@@) % كل يوم تزورني منك روعا % % ت على مأمن الحشا مدلوله % % 34(@)(@@) % أنا بالله عائذ وبحقوي % % ك وآلاء كفك المسئولة % % 35(@)(@@) % لاتردنني إلى ظلم الكر % % خ وأخلاق أهله المرذوله % % 36(@)(@@) % سيما في حريم شهرك ذي الحر % % مة غير المذالة المخذوله % 37(@)(@@) % حرم الله حرم الله ذو العر % % ش على الظلم والعداء دخوله % % 38(@)(@@) % وحقيق برعيه من غدا في % % ه ومافيه خلة مفضوله % % 39(@)(@@) % ولعمري لأنت ذاك وما أن % % شر عنك المحاسن المنحوله % % 40(@)(@@) % لم تزل من فعالك البدأة % الحر يشرى بعودة مأموله % % PageV01P3673 41(@)(@@) % فاحتسب فيه ترك إزعاج مثلي % % بعض أعمال برك المعموله % % 42(@)(@@) % يا بن أنصار دولة الحق بالني % % ية ذات الصفاء لا المدخوله % % 43(@)(@@) % والذي برزوا سماحا وبأسا % فأحاديث مجدهم منقوله % % 44(@)(@@) % لاتطل الدماء إن طلبوها % % وعطايا أكفهم مطلوله % % 45(@)(@@) % ليس فيهم مطالب الناس % بالشكر ولافيهم المسمى قبوله % % 46(@)(@@) % لاتكن عارضا رجوت حياه % فغدا مرسلا علي سيوله % % 47(@)(@@) % بينما النفس في بهائك ترجو % % ملك دار معمورة مأهوله % % 48(@)(@@) % وتراعى آمالها منك نجا % % ز مواعيد للمنى ممطوله % % 49(@)(@@) % إذ يتاني الرسول منك بأمر % يشبه الموت نفسه أو رسوله % % 50(@)(@@) % وهو إزعاجها بأعنف عنف % عن محل قد استطابت حلوله % % PageV01P3674 51(@)(@@) % ويح نفسي وما لراجيك ويح % أتراها بسيفها مقتوله % % 52(@)(@@) % حاش لله إنها لتريني % % بك إشراق نجمها لا أفوله % % 53(@)(@@) % ليس من عادة الأمير المرجى % % أن يغول امرءا رجا أن يعوله % % 54(@)(@@) % أنا إن لم تذد يميناك عني % % غير شك فريسة مأكوله % % 55(@)(@@) % فليصل كفي الأمير بحبل % عاصم من حباله المجدوله % 56(@)(@@) % كم وكم قدرت بدفعك عنها % % رد أظفار دهرها مغلوله % % 57(@)(@@) % كم وكم قدرت بسعيك فيما % % ترتجيه من الأمور حصوله % % PageV01P3675 البحر : - 1(@)(@@) % لازلت تفخم والثناء ضئيل % ويعز عرضك والثراء ذليل % 2(@)(@@) % حملتني ما لا أطيق وإنما % % شأن الكريم الحمل لا التحميل % 3(@)(@@) % كلفتني ماتستحق وبعضه % % ثقل على المتكلفين ثقيل % 4(@)(@@) % إن كنت تطلب في المديح مشاكلا % لك في الرجال فما إليه سبيل % 5(@)(@@) % أترى عديلك في المديح 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms843# مواتيا % هيهات مالك في الأمور عديل % 6(@)(@@) % اعجزت وعيشك عن حقوقك طاقتي % % أأطيقها وحدي وأنت قبيل % 7(@)(@@) % بل موسم بل أمة بل عالم % بل عالمون وكل ذا فقليل % 8(@)(@@) % وكذاك معروف الكرام كفاية % أبدا وأكثر مدحهم تعليل % 9(@)(@@) % يأتي القليل من الضئيل بحقه % كيما يكون من الجزيل جزيل % 10(@)(@@) % ويد البخيل لما استفاد قرارة % ويد الجواد لما استفاد مسيل % PageV01P3676 11(@)(@@) % هل أنت مستمع فأنطق بالتي % % يشفى بها من ذي الغليل غليل % 12(@)(@@) % فلكم نطقت من الصواب بخطبة % فيها البيان إذا أحال محيل % 13(@)(@@) % إن العيوب مع التتبع جمة % وكثيرهن إذا اغتفرت قليل % % 14(@)(@@) % فاجعل تصفحك المديح تفرسا % في غيب ما تسدي غدا وتنيل % 15(@)(@@) % فلذاك أجدر أن يعانيه الفتى % % ولذاك أخلق أن يقال نبيل % 16(@)(@@) % دع مادحيك يقصرون ولاتكن % ممن يقال مقصر وبخيل % 17(@)(@@) % إني أعيذك أن يقولوا كاتب % ألف الحساب فشأنه التحصيل % % 18(@)(@@) % وأجل منها أن يقولوا ماجد % ألف السماح فشأنه التسهيل % % 19(@)(@@) % والبس جمالك عند كل قبيحة % إن التجمل بالرجال جميل % 20(@)(@@) % ماذا يضر فتى جليلا قدره % من أن يدق المدح وهو جليل % PageV01P3677 21(@)(@@) % وأحق زوج أن ينتج شكله % % حسناء تذكر عاثر ومقيل % 22(@)(@@) % وإذا نظرت فإن أخلق منهما % % لنتاج مجد جاحد ومنيل % % 23(@)(@@) % أفيغفر الكفران وهو كبيرة % ويؤاخذ التشبيه والتمثيل % 24(@)(@@) % فعلام أعذل في امتثال مقالة % قد قالها جيل سواي وجيل % 25(@)(@@) % ضرب الركام لكل تهمة متهم % مثلا وشاع بذاك قبلي قيل % 26(@)(@@) % أفضل وأغض جفون عينك رأفة % بذوي العيوب يجب لك التفضيل % 27(@)(@@) % ولقد تصيب بديل كل مبرز % من مادحيك وليس منك بديل % 28(@)(@@) % كم قال جودك للمنهنه بدأة % هيهات ليس لسنتي تبديل % 29(@)(@@) % وكذا يقول لمن ينهنه عوده % % هيهات ليس لنعمتي تحويل % 30(@)(@@) % ولراحتيك بدأة وعوادة % وليوم عرفك بكرة وأصيل % PageV01P3678 31(@)(@@) % يامن يطالب نفسه بحقوقنا % % مثل الغريم فرفده تعجيل % 32(@)(@@) % وينام عنا حين نلوي شكره % فعل الكريم فكشره تأجيل % 33(@)(@@) % يامن إذا حركته لكريمة % ألفيته والجول منه مهيل % 34(@)(@@) % حتى إذا نبهته لعظيمة % ألفيته والرأي منه أصيل % 35(@)(@@) % آمال نفسي فيك غير مطامع % لكنهن مزارع ونخيل % 36(@)(@@) % أجملت من وصفي خلالك جملة % وعلى التجارب بعدها التفصيل % 37(@)(@@) % فليختبرك السائلون فإنهم % % إن جربوك أتاهم التأويل % 38(@)(@@) % ليفسرن لهم فعالك 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms844# أنه % % أبدا بصدق المادحيك كفيل % 39(@)(@@) % لازلت مرغوبا إليك ميمما % مثل الصباح عليك منك دليل % 40(@)(@@) % وإذا تأملك المعاشر أملوا % % ولمن تأمل ماجدا تأميل % PageV01P3679 41(@)(@@) % ما وجه التأميل نحوك آمل % إلا التقى التأميل والتمويل % 42(@)(@@) % شهدت بخير غرة وضاحة % من حقها التعظيم والتبجيل % 43(@)(@@) % ووفت بموعدها يد نفاحة % من حقها الإفضال والتقبيل % 44(@)(@@) % ترجو سواك لدى التفكه بالمنى % % لكن عليك يحصحص التعويل % 45(@)(@@) % لازال تعويل عليك مصدقا % وعلى عداك وحاسديك عويل % PageV01P3680 البحر : - 1(@)(@@) % قني يا إلهي شح نفسي فإنني % % أرى الجود لي حظا وشيمتي البخل % 2(@)(@@) % وما ذاك أني لاأجود بنائل % % ولكن لي ما لا يحصنه قفل % 3(@)(@@) % وقد كان حق الجود بذلي ذخائري % % إلى أن يراني الله يعوزني الأكل % 4(@)(@@) % ولكن نفسي آثرت نبل مالها % % وماحيث نبل المال مايوجد النبل % PageV01P3681 البحر : - 1(@)(@@) % يامن يعيب لدينا الراح مجتهدا % أسأت قولا وقد أحسنت في العمل % % 2(@)(@@) % تركتها مؤثرا للأكرمين بها % % وعبتها عيب ذي جهل وذي خطل % 3(@)(@@) % فبؤ بحمد وذم وتستحقهما % % كما خلطت الذي أسديت بالعذل % % 4(@)(@@) % ماكنت إلا كساق خاض مجدحه % % شوبا من الصاب في شرب من العسل % PageV01P3682 البحر : - 1(@)(@@) % خانك الصبر يوم قيل الرحيل % إن خطب الفراق خطب جليل % 2(@)(@@) % وتزودت من سليماك زادا % فيه للطالب الشفاء غليل % 3(@)(@@) % نظرت حضرة الوداع بعين % غسلتها الدموع وهي كحيل % 4(@)(@@) % يحدر الماء من محاجر عيني % % ها على خدها مسيل أسيل % PageV01P3683 البحر : - 1(@)(@@) % إذا ما أخو الخمسين أمل مثلها % % فيا ويحه إن خاب أو أدرك الأمل % 2(@)(@@) % هو الموت أو نيل التي في منالها % % ذهاب الشباب الغض واللهو والغزل % PageV01P3684 البحر : - 1(@)(@@) % لازلت تبلغ أقصى السؤل والأمل % ممتع النفس بالسراء والجذل % 2(@)(@@) % ولاعدمت نماء لاانتهاء له % % في الحال والمال والأحباب والخول % 3(@)(@@) % يامن تزينت الدنيا بدولته % % فأصبحت وهي في حلي وفي حلل % % 4(@)(@@) % أوراد بحركم مثلي ومنصرف % في الصادرين بلا عل ولانهل % 5(@)(@@) % ألست أصلح سمسارا لبركم % ولاوكيلا ولاعونا على عمل % 6(@)(@@) % بلى وإن كان راعي الناس أهملني % % فليس حقي إهمالي مع الهمل % 7(@)(@@) % أني لأخوض للأهوال من أسد % عاد وأنهض بالأثقال من جمل % 8(@)(@@) % مازلت أنهض في الجلى أحملها % % بنجدة وبرأي غير ذي خلل % % 9(@)(@@) % عندي إذا غرر الكافون أو عجزوا % % حزم 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms845# الجبان تليه جرأة البطل % 10(@)(@@) % ولست كالمرء يؤتى عند عزمته % % من التهور يوما لا ولا الفشل % PageV01P3685 11(@)(@@) % إني بما شئت من إتقان ذي خلل % كل الوفاء ومن تقويم ذي ميل % 12(@)(@@) % وإن نفثت إلي السر مؤتمنا % لم أفش سرك عن عمد ولازلل % 13(@)(@@) % فهب لراجيك إذنا منك تلق به % % مؤدبا غير ذي جهل ولاخطل % 14(@)(@@) % لايسأل الحاجة المعوج مسلكها % % ولايحاول أمرا بين الحول % 15(@)(@@) % بل كل مايوجب الإنصاف منك له % % مع الوسائل والأسباب والوصل % % 16(@)(@@) % من ارتجاع عقار لج غاصبه % % ورد دين له في الظلم معتقل % % 17(@)(@@) % وشعبة من معاش لاتكلفه % % مر السؤال ولامستثقل الرحل % 18(@)(@@) % وكل ذاك خفيف إن نشطت له % % يامن يخف عليه كل ذي ثقل % 19(@)(@@) % أقول إذ غصبتني كف جارية % % الله أكبر من ود ومن هبل % % 20(@)(@@) % فاز الغواني بما أملن من أمل % فما يبالين ما لاقين من أجل % PageV01P3686 21(@)(@@) % متى غلبن رجال الجد في زمن % كما غلبن رجال اللهو والغزل % 22(@)(@@) % وإن أعجب شيء أنت مبصره % % في كل ما حملته الأرض من ثقل % 23(@)(@@) % كف خضيب من الحناء غاصبة % كفا خضيبا من الأبطال والعضل % 24(@)(@@) % ياحسرتا لي ويا لهفا ويا عجبا % إن هذه الحال لم تنكر ولم تزل % 25(@)(@@) % في دولتي أنا مغصوب وفي زمني % % عودي ظمىء بلا ري ولا بلل % 26(@)(@@) % أمسي وأصبح مظلوما بلاجنف % من الوزير ومحروما بلا نحل % % 27(@)(@@) % لكن لأمر خفي لا يحيط به % % علمي وإن كنت ذا علم وذا جدل % 28(@)(@@) % وإنني لأرجي أن يصبحني % % سعد السعود بحظ منه مقتبل % % 29(@)(@@) % وما أرجي سماحا منه مطرفا % لكن سماحا تليدا فيه لم يزل % 30(@)(@@) % ومافمي بمفيق من معاتبة % حتى يشافه تلك الكف بالقبل % PageV01P3687 31(@)(@@) % فليأمر السيد الحجاب حضرته % % بصون وجه مصون غير مبتذل % 32(@)(@@) % حتى يلاقيني أجفى جفاتهم % بلا فتور يرى فيه ولا كسل % 33(@)(@@) % وليجعل الإذن رسما لا زوال له % % كالإذن للقوم من أصحابه النبل % 34(@)(@@) % وما خرقت ولا ضيقت في مهل % بل قد رققت وقد أوسعت في المهل % 35(@)(@@) % ولو عجلت وجدت الله يعذرني % % في قولهخلق الإنسان من عجل % % 36(@)(@@) % ها أنت تعلم أن الصبر من صبر % تمزجه بالنجح إن النجح من عسل % 37(@)(@@) % وما علي ملام 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms846# إنني رجل % ظمئت خمسا ولم أشرع على وشل % % 38(@)(@@) % لكل شرعت على بحر له حدب % تغشى غواربه الركبان كالظلل % 39(@)(@@) % متى أنال الذي أملت من أمل % إن لم أنل بك ما أملت من أمل % % 40(@)(@@) % أنى يكون ربيعي ممرعا غدقا % إن لم يكن هكذا والشمس في الحمل % PageV01P3688 41(@)(@@) % يا آل وهب أعينوني على رجل % أعلى وأثقل في الميزان من جبل % 42(@)(@@) % حرمت منه وقد عمت فواضله % وتلكم المثلة الكبرى من المثل % 43(@)(@@) % ألحاظه لا تراعيني ونائله % لا في التفاريق تأتيني ولا الجمل % 44(@)(@@) % مضت سنون أراعي نجم دولتكم % % فيها وأعتدها قسمي من الدول % 45(@)(@@) % إن غاب حظكم استعبرت من أسف % له وإن قفل استبشرت بالقفل % 46(@)(@@) % وإن رمى الدهر من يرمي صفاتكم % % ناديته لا رماك الله بالشلل % 47(@)(@@) % حتى إذا أطلع الله السعود لكم % % خصصت بالعطلة الطولى من العطل % 48(@)(@@) % طال المطال على حقي ودافعه % % من ليس منه دفاع الحق بالعلل % % 49(@)(@@) % ولم يفت فائت تأسى النفوس به % % كنائل الكف ذات العرف والنفل % 50(@)(@@) % مال مول وأسباب مخيبة % في دولة الفوز ما هذا بمحتمل % PageV01P3689 51(@)(@@) % حتام يا سائس الدنيا تؤخرني % % وإنني لنظير الصدر لا الكفل % 52(@)(@@) % لكل قوم رسوم أنت راسمها % % ولست فيهم بذي رسم ولا طلل % 53(@)(@@) % لا في التجار ولا العمال تنصبني % % وإنني لقليل المثل والبدل % 54(@)(@@) % أنا المشار إليه بالبنان إذا % % عد المراجيح والمرموق بالمقل % 55(@)(@@) % وما وفاني بمدخول إذا كلحت % دهياء تفتر للأقوام عن عصل % 56(@)(@@) % يدوم عهدي على حال لمصطنعي % % ولا أعرد عنه ساعة الوهل % 57(@)(@@) % ولا أقول إذا نابته نائبة % مالي بعادية الأيام من قبل % 58(@)(@@) % كم في احتيالي وتدبيري لذي فزع % من ملجأ ومغارات ومدخل % 59(@)(@@) % وما أقرض نفسي كي أدلسها % % ولا أريغ لديك الحظ بالحيل % 60(@)(@@) % لكن تنصحت في نفسي لأهديها % % إليك والنفس علق ليس بالجلل % PageV01P3690 61(@)(@@) % ومن تسوق مرتاعا بسلعته % % مستشعر الخوف مملوءا من الوجل % 62(@)(@@) % فقد تقدمت في أمري على ثقة % مني يشيعها أمن من الخجل % % 63(@)(@@) % فاخبر وجرب تجدني حين تخبرني % % أمضى من السيف في الأعناق والقلل % 64(@)(@@) % وارم المهمات بي في كل حادثة % ترتاع منها أسود الغاب والأسل % 65(@)(@@) % تجد لدي كفايات مجربة % أشفى من البارد 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms847# المثلوج للغلل % % 66(@)(@@) % لا تطرحني فإني غير مطرح % ولا تذلني فإني العلق لم يذل % 67(@)(@@) % خذني عتادا لما في الدهر من نوب % محذورة ولما في الحال من نقل % 68(@)(@@) % هذا على أنني أرجو لكم مهلا % موصولة مدة الدنيا إلى مهل % 69(@)(@@) % وحقكم ذاك إن الله فضلكم % % تفضيله الضحوة الأولى على الطفل % 70(@)(@@) % براكم الله من حزم ومن كرم % أزكى من الماء بل أذكى من الشعل % % PageV01P3691 71(@)(@@) % وما افتقرتم إلى مدح يزينكم % % تالله يا زينة الأيام في الحفل % 72(@)(@@) % وكيف ذاك ومنكم كل مقتبس % من السناء وعنكم كل ممتثل % % 73(@)(@@) % تغنون عن كل تقريظ بفضلكم % % غنى الظباء عن التكحيل بالكحل % % 74(@)(@@) % تلوح في دولة الأيام دولتكم % كأنها ملة الإسلام في الملل % % 75(@)(@@) % فأنتم أولياء الله كلكم % في جنة الخلد سكناهم بلا حول % % 76(@)(@@) % ما إن لدولتكم إبان منقرض % كلا لعمري ولا ميقات مرتحل % 77(@)(@@) % أنجى الإله من المريخ زهرتكم % % ومشتريكم فقد أنجاه من زحل % 78(@)(@@) % خذها فما عجزت كلا ولا قصرت % عن رتبة السبع في أترابها الطول % 79(@)(@@) % واسلم سلامة مأمول فواضله % إذا رأوه لبني الآمال كالقبل % PageV01P3692 البحر : - 1(@)(@@) % بني طاهر إما منعتم نوالكم % فلا تمنعوا مني شفاء غليلي % % 2(@)(@@) % دعوني ألوم النفس إذ أملتكم % % وأندب مدحي فيكم بعويل % 3(@)(@@) % ولاتبخلوا عني بعرض فكلكم % % بني طاهر بالعرض غير بخيل % 4(@)(@@) % صلوني بأعراض لكم قد تمزقت % تمزق أطمار على ابن سبيل % 5(@)(@@) % يكن مناديلي إذا ما تنازعت % لحومكم كفي وكف أكيلي % % 6(@)(@@) % ولاتستقلوها رياء وسمعة % فما مثلها في مثلكم بقليل % 7(@)(@@) % بني طاهر مهما أخال على امرىء % فلومكم في الناس غير مخيل % % 8(@)(@@) % لعمر قواف عاجت العيس نحوكم % % لقد وقفت من ربعكم بمحيل % PageV01P3693 البحر : - 1(@)(@@) % م طل دمع هريق في الأطلالص بعد إقوائها من الحلال % فل ما طلت الدماء اللواتي % % 2(@)(@@) % سفكتها سواكن الأطلال % % أي حق لها فيرعاه راع % 3(@)(@@) % من نوال لأهلها ووصال % فانصرافا عن الوقوف عليها % % 4(@)(@@) % إنها من مواقف الضلال % لن ترى الدهر موقفا لرشيد % 5(@)(@@) % يشتري النكس فيه بالإبلال % ليس تجدي على المسائل دار % 6(@)(@@) % غير هيج السقام بعد اندمال % % وكفاه بما تسلف منها % % 7(@)(@@) % من قديم الخبال بعد الخبال % تهجر الوحش كل واد عراه % 8(@)(@@) % مرة ذو 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms848# حبالة أو نبال % وعساها لم تمن فيه برمي % % 9(@)(@@) % نالها صبرة ولا باحتبال % % وترى الناس يرأمون عراصا % 10(@)(@@) % يختبلن الصحيح أي اختبال % % بعدما لقوا بها البرح المبر % PageV01P3694 11(@)(@@) % رح من حابل ومن نبال % ولعمري لكانت الإنس أحجى % % 12(@)(@@) % باجتناب الأمور ذات الوبال % بل يظل الأسير منهم إذا فك % 13(@)(@@) % ك طويل الأسى على الأكبال % واقفا في معاهد الأسر يبكي % % 14(@)(@@) % من هوى آسراته غير سال % يتبع النفس كل بيضاء شالت % 15(@)(@@) % من دماء الرجال ذات انتقال % مع أني وإن رزئت عليهم % % 16(@)(@@) % واحتلبت الصبا بغير اكتهال % غير ناس على تناسي جهلي % % 17(@)(@@) % عهد أسماء بالحمى والمطال % من فتاة تحل كل ربيع % 18(@)(@@) % بمغان من المها ومحلال % حين يغدو بنو الظباء فيلقو % % 19(@)(@@) % ن خليطي جآذر ورئال % % وكذاك الزمان يمحل بالإل % % 20(@)(@@) % فين محلا يجني بعاد زيال % % حبذا عهدها الذي عاد شوقا % PageV01P3695 21(@)(@@) % وحنينا إلى العهود الخوالي % % والزمان الذي لبسنا به العي % % 22(@)(@@) % ش جديدا كأنه برد حال % والمحل الذي تبدل عينا % 23(@)(@@) % بعد عين من الأنيس الخوالي % % إن نبادل بسكنه فعلى ضن % 24(@)(@@) % ن بتلك الأعلاق عند البدال % ليت شعري هل ذلك العهد مرجو % % 25(@)(@@) % ع بعطف من النوى وانفتال % إذ غصون اللجين لا البان منه % % 26(@)(@@) % فوق كثبان لؤلؤ لا رقال % % ليس غير العيون فيهن من نو % 27(@)(@@) % ر وغير الثدي من أحمال % بينها غادة تشارك فيها % % 28(@)(@@) % بهجة الشمس صورة التمثال % % من ذوات الحظوظ في البدن إلا % % 29(@)(@@) % طي بين الصدور والأكفال % تقسم الحلي بين قب خماص % 30(@)(@@) % تحت أثنائه وجسم خدال % يتشاكى وشاحها وأخوه ضد % PageV01P3696 31(@)(@@) % شكوى السوار والخلخال % جاع شاك وكظ شاك % 32(@)(@@) % وما ذاك لخبث الغذاء والإرقال % بلكلا الشاكيين نزل منها % % 33(@)(@@) % نزلا طيبا من الأنزال % % شد من متنها هوى بعضها بعضا % 34(@)(@@) % وقد هم خصرها بانخزال % كاد لولاه أن يلين قضيب % 35(@)(@@) % من كثيب على شفير انهيال % بل حمى جسمها وقد أسلمته % 36(@)(@@) % رقة سابرية لانحلال % مستعار رنوها من مهاة % 37(@)(@@) % مستعار عطوها من غزال % % بل هي المستعار ذلك منها % % 38(@)(@@) % للمها والظباء غير انتحال % ظبية إن عطت جنت ثمرات % 39(@)(@@) % من قلوب ولم تنش غصن ضال % ذات جيد عطوله أحسن الحل % % 40(@)(@@) % ي عليه وليس 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms849# بالمعطال % روضة الليل عاطر النشر فيه % % PageV01P3697 41(@)(@@) % حين تعتل نكهة المنفال % % أيما منظر تزودت منه % % 42(@)(@@) % يوم ردت جمالها لاحتمال % % ذات يوم رأيتها فيه مليء % 43(@)(@@) % للعين من بهجة وحسن دلال % لبست حلة الشباب وظلت % 44(@)(@@) % تتهادى في غصنه الميال % صبغة أرجوانية في صفاء % 45(@)(@@) % وقوام مهفهف في اعتدال % وزهاها سواد فرع بهيم % 46(@)(@@) % فهي سكرى لذاك سكر اختيال % لتزد في اختيالها ولعمري % % 47(@)(@@) % إنها في مزية المختال % أقبلت في القبول تمشي الهوينا % % 48(@)(@@) % وهي حسنا كالحظ في الإقبال % قد تجلت على محاسن ليست % 49(@)(@@) % عند فقد الحلي والإعطال % ظاهرت شكة عليها بأخرى % % 50(@)(@@) % لامرىء غير مؤذن بقتال % ويح أعدائها أذلك منها % % PageV01P3698 51(@)(@@) % فرط حشد لحاسر معزال % لاتظاهر سلاحها لمحب % 52(@)(@@) % فكفاه بسهمها القتال % أيها العائبي بخفة لحمي % % 53(@)(@@) % بجلى منه كسوة الأوصال % وهنيئا لك الفضول من اللح % % 54(@)(@@) % م ففاخر بها ذوات الحجال نه طل دمع هريق في الأطلال % بعد إقوائها من الحلال % 55(@)(@@) % فل ما طلت الدماء اللواتي % % سفكتها سواكن الأطلال % % 56(@)(@@) % أي حق لها فيرعاه راع % من نوال لأهلها ووصال % 57(@)(@@) % فانصرافا عن الوقوف عليها % % إنها من مواقف الضلال % 58(@)(@@) % لن ترى الدهر موقفا لرشيد % يشتري النكس فيه بالإبلال % 59(@)(@@) % ليس تجدي على المسائل دار % غير هيج السقام بعد اندمال % % 60(@)(@@) % وكفاه بما تسلف منها % % من قديم الخبال بعد الخبال % PageV01P3699 61(@)(@@) % تهجر الوحش كل واد عراه % مرة ذو حبالة أو نبال % 62(@)(@@) % وعساها لم تمن فيه برمي % % نالها صبرة ولا باحتبال % % 63(@)(@@) % وترى الناس يرأمون عراصا % يختبلن الصحيح أي اختبال % % 64(@)(@@) % بعدما لقوا بها البرح المبر % رح من حابل ومن نبال % 65(@)(@@) % ولعمري لكانت الإنس أحجى % % باجتناب الأمور ذات الوبال % 66(@)(@@) % بل يظل الأسير منهم إذا فك % ك طويل الأسى على الأكبال % 67(@)(@@) % واقفا في معاهد الأسر يبكي % % من هوى آسراته غير سال % 68(@)(@@) % يتبع النفس كل بيضاء شالت % من دماء الرجال ذات انتقال % 69(@)(@@) % مع أني وإن رزئت عليهم % % واحتلبت الصبا بغير اكتهال % 70(@)(@@) % غير ناس على تناسي جهلي % % عهد أسماء بالحمى والمطال % PageV01P3700 71(@)(@@) % من فتاة تحل كل ربيع % بمغان من المها ومحلال % 72(@)(@@) % حين يغدو بنو الظباء فيلقو % % ن خليطي جآذر ورئال % % 73(@)(@@) % وكذاك الزمان يمحل بالإل % % فين 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms850# محلا يجني بعاد زيال % % 74(@)(@@) % حبذا عهدها الذي عاد شوقا % وحنينا إلى العهود الخوالي % % 75(@)(@@) % والزمان الذي لبسنا به العي % % ش جديدا كأنه برد حال % 76(@)(@@) % والمحل الذي تبدل عينا % بعد عين من الأنيس الخوالي % % 77(@)(@@) % إن نبادل بسكنه فعلى ضن % ن بتلك الأعلاق عند البدال % 78(@)(@@) % ليت شعري هل ذلك العهد مرجو % % ع بعطف من النوى وانفتال % 79(@)(@@) % إذ غصون اللجين لا البان منه % % فوق كثبان لؤلؤ لا رقال % % 80(@)(@@) % ليس غير العيون فيهن من نو % ر وغير الثدي من أحمال % PageV01P3701 81(@)(@@) % بينها غادة تشارك فيها % % بهجة الشمس صورة التمثال % % 82(@)(@@) % من ذوات الحظوظ في البدن إلا % % طي بين الصدور والأكفال % 83(@)(@@) % تقسم الحلي بين قب خماص % تحت أثنائه وجسم خدال % 84(@)(@@) % يتشاكى وشاحها وأخوه ضد % شكوى السوار والخلخال % 85(@)(@@) % جاع شاك وكظ شاك % وما ذاك لخبث الغذاء والإرقال % 86(@)(@@) % بلكلا الشاكيين نزل منها % % نزلا طيبا من الأنزال % % 87(@)(@@) % شد من متنها هوى بعضها بعضا % وقد هم خصرها بانخزال % 88(@)(@@) % كاد لولاه أن يلين قضيب % من كثيب على شفير انهيال % 89(@)(@@) % بل حمى جسمها وقد أسلمته % رقة سابرية لانحلال % 90(@)(@@) % مستعار رنوها من مهاة % مستعار عطوها من غزال % % PageV01P3702 91(@)(@@) % بل هي المستعار ذلك منها % % للمها والظباء غير انتحال % 92(@)(@@) % ظبية إن عطت جنت ثمرات % من قلوب ولم تنش غصن ضال % 93(@)(@@) % ذات جيد عطوله أحسن الحل % % ي عليه وليس بالمعطال % 94(@)(@@) % روضة الليل عاطر النشر فيه % % حين تعتل نكهة المنفال % % 95(@)(@@) % أيما منظر تزودت منه % % يوم ردت جمالها لاحتمال % % 96(@)(@@) % ذات يوم رأيتها فيه مليء % للعين من بهجة وحسن دلال % 97(@)(@@) % لبست حلة الشباب وظلت % تتهادى في غصنه الميال % 98(@)(@@) % صبغة أرجوانية في صفاء % وقوام مهفهف في اعتدال % 99(@)(@@) % وزهاها سواد فرع بهيم % فهي سكرى لذاك سكر اختيال % 100(@)(@@) % لتزد في اختيالها ولعمري % % إنها في مزية المختال % PageV01P3703 101(@)(@@) % أقبلت في القبول تمشي الهوينا % % وهي حسنا كالحظ في الإقبال % 102(@)(@@) % قد تجلت على محاسن ليست % عند فقد الحلي والإعطال % 103(@)(@@) % ظاهرت شكة عليها بأخرى % % لامرىء غير مؤذن بقتال % 104(@)(@@) % ويح أعدائها أذلك منها % % فرط حشد لحاسر معزال % 105(@)(@@) % لاتظاهر سلاحها لمحب % فكفاه بسهمها القتال % 106(@)(@@) % أيها العائبي بخفة لحمي % % بجلى منه كسوة الأوصال 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms851# % 107(@)(@@) % وهنيئا لك الفضول من اللح % % م ففاخر بها ذوات الحجال % 108(@)(@@) % قل ما توجد الفضائل إلا % % في خفاف الرجال دون الثقال % 109(@)(@@) % ينظم الدر في السلوك وتأبى % % عزة الدر نظمه في الحبال % 110(@)(@@) % كم غليظ من الرجال ثقيل % ناقص الوزن شائل المثال % PageV01P3704 111(@)(@@) % من أناس أوتوا حلوم العصافي % % ر فلم تغنهم جسوم البغال % 112(@)(@@) % وقضيف من الرجال خفيف % راجح الوزن عند وزن الرجال % % 113(@)(@@) % مكن أناس ذوي جسوم شخات % قد أمرت على نفوس نبال % 114(@)(@@) % حظهم وافر من الروح روح ال % % له لاوافر من الصلصال % % 115(@)(@@) % لم يخالطهم من الحمأ المس % % نون إلا طيف كطيف الخيال % 116(@)(@@) % من كهول جحاجح تعرف الحن % % كة فيهم وفتية أزوال % 117(@)(@@) % خلقوا للخطوب يمضون فيها % % فهم مرهفون مثل النصال % 118(@)(@@) % يتلظون حدة وذكاء % كتلظي ثوائر الأصلال % 119(@)(@@) % يستشفون رقة وصفاء % عن رقيق من الطباع زلال % 120(@)(@@) % مثل ما تستشف آنية البل % لور عن ماء مزنة سلسال % % PageV01P3705 121(@)(@@) % بين تلك الثياب أرواح نور % علقت منهم بأشبال آل % 122(@)(@@) % جثث لطفت على قدر الأر % % واح إن الآلات كالعمال % 123(@)(@@) % لم تكن آلة ليخلقها الخا % % لق إلا شبيهة المؤتال % 124(@)(@@) % هم مفاتيح كل قفل عسير % وأطباء كل داء عضال % 125(@)(@@) % هم مصابيح كل ليل بهيم % وأدلاء كل أمر ضلال % 126(@)(@@) % فليعب عائب سواهم وإلا % % فليلاطم أسنة في عوال % 127(@)(@@) % ما يعيب العماة لولا عماهم % % من مصابيح أذكيت في ذبال % 128(@)(@@) % لو رأى الله أن في البدن فضلا % ما زوى الفضل عن علي المعالي % % 129(@)(@@) % ما زوى الله عن علي بن يحيى % % وزواه عني فلست أبالي % % 130(@)(@@) % من فتى أسمن المكارم حتى % % هزلته وحبذا من هزال % PageV01P3706 131(@)(@@) % لم يثقل ولم يشذب وإن كا % % نت له هيبة الطوال البجال % % 132(@)(@@) % طاله بالعظام قوم فأضحى % % بمساعيه وهو فوق الطوال % 133(@)(@@) % فليطلهم بالصالحات البواقي % % وليطولوه بالعظام البوالي % % 134(@)(@@) % ماجد سائر الندى في فياف % مقفرات منأهله أفلال % 135(@)(@@) % سالكا فجه بغير صحاب % وهو ما شئت من مهيب مهال % % 136(@)(@@) % يا لقوم لأنسه وهداه % بين تلك المهامه الأغفال % 137(@)(@@) % أآنسته من مجده مؤنسات % أوحشته بقلة الأشكال % % 138(@)(@@) % وهداه من وجهه ضوء بدر % نوره الدهر غير ذي اضمحلال % 139(@)(@@) % من رجال توقلوا في المعالي % % بالمساعي توقل 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms852# الأوعال % 140(@)(@@) % بل ترقى إلى العلا طالبوها % % وتدلى إلى العلا من معال % PageV01P3707 141(@)(@@) % منحته فضوله كل فضل % حل بين النبيل والتنبال % 142(@)(@@) % بل أبى بذله الفضول تعد % من ظلوم كرائم الأموال % 143(@)(@@) % يفضل المفضلون إلا ابن يحيى % % فهو عال عن خطة الإفضال % 144(@)(@@) % غير راض لسائليه بقصد % عند إثرائه ولا إقلال % 145(@)(@@) % فإذا ماله تعذر وصى % % جاهه بعده على السؤال % 146(@)(@@) % فتراه لهم رشاء وطورا % جمة يستقونها بالعقال % % 147(@)(@@) % كل من يبن لا يبن من النا % % س عيال عليه أو كالعيال % 148(@)(@@) % ما يقاسي العفاة من عض دهر % ما يقاسى فيهم من العذال % 149(@)(@@) % بل هو المرء يحجم العذل عنه % % لا لخوف الخنا بل الإجلال % 150(@)(@@) % يتبارى إليه وفدان شتى % % وفد شكر يحث وفد سؤال % PageV01P3708 151(@)(@@) % بل عطاياه لاتزال تباري % % وافدات إلى ذوي الآمال % % 152(@)(@@) % موغلات في كل فج من الأر % % ض تفوت الرياح في الأيقال % % 153(@)(@@) % بالغات إلى المقصر عنها % % نائلات بعيد كل منال % 154(@)(@@) % يرقد الطالبون وهي إليهم % % أرقات الوجيف والإرقال % 155(@)(@@) % رحلت نحو من تثاقل عنها % % وكفته مؤونة الترحال % 156(@)(@@) % لاتزل عنه نعمة لو أزيلت % لم تجد عنه وجهة للزوال % 157(@)(@@) % فلئن كان للرعية غيثا % أصبحت في حياه كالأهمال % 158(@)(@@) % إنه للجموح يجمح في الغي % ي لنكل من أعظم الأنكال % 159(@)(@@) % في يد الله والخليفة منه % % سيف كيد على ذوي الإخلال % 160(@)(@@) % هو أجلى عن الخليفة لما % % سلت السيف فتنة الجهال % PageV01P3709 161(@)(@@) % رد بالأمس عرقها في ثراهام طل دمع هريق في الأطلال % بعد إقوائها من الحلال % 162(@)(@@) % فل ما طلت الدماء اللواتي % % سفكتها سواكن الأطلال % % 163(@)(@@) % أي حق لها فيرعاه راع % من نوال لأهلها ووصال % 164(@)(@@) % فانصرافا عن الوقوف عليها % % إنها من مواقف الضلال % 165(@)(@@) % لن ترى الدهر موقفا لرشيد % يشتري النكس فيه بالإبلال % 166(@)(@@) % ليس تجدي على المسائل دار % غير هيج السقام بعد اندمال % % 167(@)(@@) % وكفاه بما تسلف منها % % من قديم الخبال بعد الخبال % 168(@)(@@) % تهجر الوحش كل واد عراه % مرة ذو حبالة أو نبال % 169(@)(@@) % وعساها لم تمن فيه برمي % % نالها صبرة ولا باحتبال % % 170(@)(@@) % وترى الناس يرأمون عراصا % يختبلن الصحيح أي اختبال % % PageV01P3710 171(@)(@@) % بعدما لقوا بها البرح المبر % رح من حابل ومن نبال % 172(@)(@@) % ولعمري لكانت الإنس 
