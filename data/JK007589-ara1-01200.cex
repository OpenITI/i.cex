urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1165# منا وإن بواطنا % % 159(@)(@@) % تلك المفارح أصبحت % % قلبت هموما للعظام شوافنا % % 160(@)(@@) % لا تبعدن وإن نزلت بمنزل % أمسى بعيدا عن أودك شاطنا % % PageV01P4886 161(@)(@@) % فلقد أصابتك الخطوب حواقدا % ولقد أشاطتك المنون ضواغنا % % 162(@)(@@) % كنت الذي تقتادهن على الوجى % % وتذلهن مخاطما ورواسنا % % 163(@)(@@) % سقيت معونتك الوزير فلم تكن % % إلا معاون جمة ومعادنا % % 164(@)(@@) % وأثيب سعيك للإمام فلم تزل % % لثغوره بجنود رأيك شاحنا % % 165(@)(@@) % ما كانت العزاء تزحم منكم % % إلا جبالا لا تزول ركائنا % % 166(@)(@@) % ماكانت الللأواء تلقى منكم % % إلا مضابر نوبة ومماتنا % % 167(@)(@@) % لهفي أبا العباس لهفة آمل % كان ارتجاك على الزمان معاونا % % 168(@)(@@) % ولساسة الدنيا أحق بلهفتي % % مني وأولى بالغليل جناجنا % % 169(@)(@@) % لهفي عليك لخطة مرهوبة % ما كنت فيها بالذميم مواطنا % % 170(@)(@@) % لهفي عليم لها إذا أزماتها % % ضاقت على الزول الرحيب معاطنا % % PageV01P4887 171(@)(@@) % كم من أعاد قد رقيت فلم تدع % فيهم رقاك الشافيات مداهنا % % 172(@)(@@) % أطفأت نارهم وكن نوائرا % وأبحت حقدهم وكان دواجنا % % 173(@)(@@) % متألفا لهم تألف حول % لو شاء سير بالقفار سفائنا % % 174(@)(@@) % متلطفا لهم تلطف قلب % لو شاء شاد على البحار مدائنا % % 175(@)(@@) % ماكان سعيك للخلائف كلها % % إلا معاقل تارة ومعادنا % % 176(@)(@@) % إن نابهم خطب درأت وإن بغوا % % مالا ملأت خزائنا وخزائنا % % 177(@)(@@) % كم قد فتحت لهم عدوا جامحا % كم قد حرثت لهم خراجا حارنا % % 178(@)(@@) % أنشرت آراء وكن هوامدا % وأثرت أموالا وكن دفائنا % % 179(@)(@@) % كانت فتوحك كلها ميمونة % تأتي وليست للحتوف قرائنا % % 180(@)(@@) % بالخيل لكن لاتزال صوافنا % والبيض لكن لاتزال كوامنا % % PageV01P4888 181(@)(@@) % عجبا لفتحك بالسيوف كوامنا % تلك الفتوح وبالجياد صوافناص ولع الزمان بأن يحرك ساكنا % 182(@)(@@) % وبأن يثير من الأوابد كامنا % % وهم الأحبة من أقام ترحلوا % % 183(@)(@@) % عنه فكلهم يودع ظاعنا % % أضحى الزمان مدائنا لك فيهم % 184(@)(@@) % ولعل رشدا إن قضيت مدائنا % % فأرى الليالي ما نقضن معاهدا % 185(@)(@@) % فيما أتين ولا هجمن مآمنا % % رحلن إلفك عن مساكن قلعة % 186(@)(@@) % كانت لقوم آخرين مساكنا % % فاقن الحياء أبا الحسين فلم يكن % % 187(@)(@@) % شيء فري لم تخله كائنا % % كان الذي قد كنت توقن أنه % % 188(@)(@@) % سيكون فاجزع واقنا لا واهنا % % هون عليك المقطعات ولا تكن % % 189(@)(@@) % بنصيحة من مخلص متهاونا % % إن الحوادث قد عدون فواجعا % 190(@)(@@) % فاشدد إزارك لا يكن فواتنا % % لا تنكرن 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1166# من المصائب منا أتى % % PageV01P4889 191(@)(@@) % حتى كأنك كنت منها آمنا % % أنكره إنكار امرىء عرف الردى % % 192(@)(@@) % ورأى النفوس بأن يمتن رهائنا % % إني نكرت على الليالي أن أتت % 193(@)(@@) % ما قد أتته لم يكن ظنائنا % % هل كنت غرا بالنوائب قبلها % % 194(@)(@@) % أم خلتهن لما تحب ضوامنا % % بل كنت فيما قد لقيت مفكرا % % 195(@)(@@) % حتى كأنك كنت ثم معاينا % % فعلام تنفر نفرة وحشية % 196(@)(@@) % وتعد دهرك غائلا لك خائنا % % ماخان دهر مؤذن بصروفه % 197(@)(@@) % ما انفك يرسل بالمواعظ آذنا % % طامن حشاك أخا البقاء لدائه % 198(@)(@@) % فلتزجرن أشائما وأيامنا % % داء البقاء الرفء إما عاجلا % 199(@)(@@) % لا زلت توفاه وإما آينا % % من عاش أثكله الزمان خليله % 200(@)(@@) % وسقاه بعد الصفو رنقا آجنا % % وكذا شرب العيش فيه تلون % PageV01P4890 201(@)(@@) % بيناه عذب إذ تحول آسنا % % والمرء ماعدت الحوادث نفسه % 202(@)(@@) % يلقي الزمان محاربا ومهادنا % % دار الزمان بليله ونهاره % 203(@)(@@) % فأدار أرحاء المنون طواحنا % % فتأمل الدنيا ولاتعجب لها % % 204(@)(@@) % واعجب لمن أضحى إليها راكنا % % قضى أبو العباس خلك نحبه % 205(@)(@@) % فجعلت نحبك دمعك المتهاتنا % % وودت أنك منه أول لاحق % % 206(@)(@@) % أوكنت مضمونا إليه مقارنا % % لكن أبى ذاك الإله فلا ترد % 207(@)(@@) % مالم يرد لقضائه وارض العزاء مخادنا % % لاتسجنن الهم عندك إنه % % 208(@)(@@) % مازال مسجونا يعذب ساجنا % % واصبر كما أمر المليك فإنما % % 209(@)(@@) % يهدي المدين إذا أطاع الدائنا % % والله يمنحك الخلود مجاورا % 210(@)(@@) % أخيك في جناته ومساكنا % % من بعد أن تحيا حياة ممتع % % PageV01P4891 211(@)(@@) % لا كالمشيع علو بين ظعائنا % % مامات خلك يوم زار ضريحه % % 212(@)(@@) % بل يوم زار قوابلا وحواضنا % % بل منذ أودع من أبيه وأمه % 213(@)(@@) % مستودعيه فكن لذلك فاطنا % % بل قد يمت دون الألى فوق الثرى % % 214(@)(@@) % نطق البيان مكاتبا وملاسنا % % مازال خلك ميتا ولميت % 215(@)(@@) % في الميتين مصاهرا ومخاتنا % % مات الخلائق مذ نعاهم ربهم % % 216(@)(@@) % بل مذ رأت عين قرينا بائنا % % أفللتقدم والتأخر يمتري % % 217(@)(@@) % عينيك أسراب الدموع هواتنا % % ساق الخليل إلى الخليل فناؤه % % 218(@)(@@) % ليكون مدفونا له أو دافنا % % ولربما اختطفا جميعا خطفة % 219(@)(@@) % والدهر أخطف ماتراه محاجنا % % ولما جلوت صفاح قلبك واعظا % % 220(@)(@@) % إني رأيت عليه رينا رائنا % % لكنه التذكير يهديه الفتى % % PageV01P4892 221(@)(@@) % لأخيه حين يرى أساه راحنا % % ولئن عبأت لك الأسى لعلى امرئ 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1167# % 222(@)(@@) % أمسى الحزين عليه لا المتحازنا % % ولئن أمرتك بالتجلد ظاهرا % 223(@)(@@) % لقد امتلأت عليه شجوا باطنا % % ولقد أقول غداة قام نعيه % % 224(@)(@@) % هيجت لي شجنا لعمرك شاجنا % % صفن الجواد وقد يطول جراؤه % % 225(@)(@@) % ولتسمعن بكل جار صافنا % % وطوى العتيق جناحه في وكنه % % 226(@)(@@) % وقصار ذي الطيران يلقى واكنا % % والحي يرتع ثم يسرع برهة % 227(@)(@@) % فإذا قضى أربيه أمسى عاطنا % % مات الذي نال العلا متناولا % % 228(@)(@@) % من بعد مانال العلا متطامنا % % مات الذي كان النصيح مساترا % 229(@)(@@) % مات الذي كان النصير معالنا % % مات الذي فتح الفتوح ملاينا % 230(@)(@@) % لاعاجزا عن فتحهن مخاشنا % % مات الذي أحيا النفوس بيمنه % % PageV01P4893 231(@)(@@) % وأمات منها للملوك ضغائنا % % مات الذي صان الدماء ولم يزل % 232(@)(@@) % عن كل إثم للأئمة صائنا % % مات الذي أغناه لطف حويله % 233(@)(@@) % عن أن يهز صوارما وموارنا % % مات الذي رأب الثأي متعاليا % 234(@)(@@) % عن أن يصادف ضاربا أو طاعنا % % يا أحمد المحمود إن عيوننا % % 235(@)(@@) % أضحت كما أمست عليك سخائنا % % يا أصبغي الملك إن ظواهرا % 236(@)(@@) % أكسفتها منا وإن بواطنا % % تلك المفارح أصبحت % % 237(@)(@@) % قلبت هموما للعظام شوافنا % % لا تبعدن وإن نزلت بمنزل % 238(@)(@@) % أمسى بعيدا عن أودك شاطنا % % فلقد أصابتك الخطوب حواقدا % 239(@)(@@) % ولقد أشاطتك المنون ضواغنا % % كنت الذي تقتادهن على الوجى % % 240(@)(@@) % وتذلهن مخاطما ورواسنا % % سقيت معونتك الوزير فلم تكن % % PageV01P4894 241(@)(@@) % إلا معاون جمة ومعادنا % % وأثيب سعيك للإمام فلم تزل % % 242(@)(@@) % لثغوره بجنود رأيك شاحنا % % ما كانت العزاء تزحم منكم % % 243(@)(@@) % إلا جبالا لا تزول ركائنا % % ماكانت الللأواء تلقى منكم % % 244(@)(@@) % إلا مضابر نوبة ومماتنا % % لهفي أبا العباس لهفة آمل % 245(@)(@@) % كان ارتجاك على الزمان معاونا % % ولساسة الدنيا أحق بلهفتي % % 246(@)(@@) % مني وأولى بالغليل جناجنا % % لهفي عليك لخطة مرهوبة % 247(@)(@@) % ما كنت فيها بالذميم مواطنا % % لهفي عليم لها إذا أزماتها % % 248(@)(@@) % ضاقت على الزول الرحيب معاطنا % % كم من أعاد قد رقيت فلم تدع % 249(@)(@@) % فيهم رقاك الشافيات مداهنا % % أطفأت نارهم وكن نوائرا % 250(@)(@@) % وأبحت حقدهم وكان دواجنا % % متألفا لهم تألف حول % PageV01P4895 251(@)(@@) % لو شاء سير بالقفار سفائنا % % متلطفا لهم تلطف قلب % 252(@)(@@) % لو شاء شاد على البحار مدائنا % % ماكان سعيك للخلائف كلها % % 253(@)(@@) % إلا معاقل تارة ومعادنا % % إن نابهم خطب درأت وإن بغوا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1168# % % 254(@)(@@) % مالا ملأت خزائنا وخزائنا % % كم قد فتحت لهم عدوا جامحا % 255(@)(@@) % كم قد حرثت لهم خراجا حارنا % % أنشرت آراء وكن هوامدا % 256(@)(@@) % وأثرت أموالا وكن دفائنا % % كانت فتوحك كلها ميمونة % 257(@)(@@) % تأتي وليست للحتوف قرائنا % % بالخيل لكن لاتزال صوافنا % 258(@)(@@) % والبيض لكن لاتزال كوامنا % % عجبا لفتحك بالسيوف كوامنا % 259(@)(@@) % تلك الفتوح وبالجياد صوافنا % % مازلت تجتنب الدماء وسفكها % % 260(@)(@@) % فإذا طغت وجدتك حينا حائنا % % تضع السلاح تأثما وتكرما % PageV01P4896 261(@)(@@) % وتظل بالرأي السديد مزابنا % % فكأنك المقدار يخفى شخصه % % 262(@)(@@) % ويحرك الأشياء طرا ساكنا % % ولئن وضعت القوس ثم لمعتد % 263(@)(@@) % إن شاء عبأ للرماء كنائنا % % ولئن وضعت الرمح ثم لمصدر % 264(@)(@@) % إن شاء هيأ للطعان مطاعنا % % ولئن وضعت السيف ثم لمنجد % 265(@)(@@) % إن شاء وطأ للضراب أماكنا % % يغدو المقاتل ماهنا لاماهرا % 266(@)(@@) % أبدا وتعدو ماهرا لاماهنا % % كم قد ظفرت مكاتبا ومخاطبا % % 267(@)(@@) % حتى خشيت مضاربا ومطاعنا % % كم قد غلبت ذوي الشقاق مسالما % 268(@)(@@) % لاسافكا لدم ولكن حاقنا % % فوقيت من دنس الدماء أئمة % 269(@)(@@) % ووقيت من قومت ركنا دائنا % % نفلتهم أموالهم ودماءهم % % 270(@)(@@) % ونساءهم فتركتهن حواضنا % % ولو التووا لرميتهم بمكائد % PageV01P4897 271(@)(@@) % أخفى من الأجل الحبيس مكامنا % % كم قسور قلمت منه أظافرا % 272(@)(@@) % تقليم من لم نخف منه براثنان ولع الزمان بأن يحرك ساكنا % وبأن يثير من الأوابد كامنا % % 273(@)(@@) % وهم الأحبة من أقام ترحلوا % % عنه فكلهم يودع ظاعنا % % 274(@)(@@) % أضحى الزمان مدائنا لك فيهم % ولعل رشدا إن قضيت مدائنا % % 275(@)(@@) % فأرى الليالي ما نقضن معاهدا % فيما أتين ولا هجمن مآمنا % % 276(@)(@@) % رحلن إلفك عن مساكن قلعة % كانت لقوم آخرين مساكنا % % 277(@)(@@) % فاقن الحياء أبا الحسين فلم يكن % % شيء فري لم تخله كائنا % % 278(@)(@@) % كان الذي قد كنت توقن أنه % % سيكون فاجزع واقنا لا واهنا % % 279(@)(@@) % هون عليك المقطعات ولا تكن % % بنصيحة من مخلص متهاونا % % 280(@)(@@) % إن الحوادث قد عدون فواجعا % فاشدد إزارك لا يكن فواتنا % % PageV01P4898 281(@)(@@) % لا تنكرن من المصائب منا أتى % % حتى كأنك كنت منها آمنا % % 282(@)(@@) % أنكره إنكار امرىء عرف الردى % % ورأى النفوس بأن يمتن رهائنا % % 283(@)(@@) % إني نكرت على الليالي أن أتت % ما قد أتته لم يكن ظنائنا % % 284(@)(@@) % هل كنت غرا بالنوائب قبلها % % أم خلتهن لما تحب ضوامنا % % 285(@)(@@) % بل كنت 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1169# فيما قد لقيت مفكرا % % حتى كأنك كنت ثم معاينا % % 286(@)(@@) % فعلام تنفر نفرة وحشية % وتعد دهرك غائلا لك خائنا % % 287(@)(@@) % ماخان دهر مؤذن بصروفه % ما انفك يرسل بالمواعظ آذنا % % 288(@)(@@) % طامن حشاك أخا البقاء لدائه % فلتزجرن أشائما وأيامنا % % 289(@)(@@) % داء البقاء الرفء إما عاجلا % لا زلت توفاه وإما آينا % % 290(@)(@@) % من عاش أثكله الزمان خليله % وسقاه بعد الصفو رنقا آجنا % % PageV01P4899 291(@)(@@) % وكذا شرب العيش فيه تلون % بيناه عذب إذ تحول آسنا % % 292(@)(@@) % والمرء ماعدت الحوادث نفسه % يلقي الزمان محاربا ومهادنا % % 293(@)(@@) % دار الزمان بليله ونهاره % فأدار أرحاء المنون طواحنا % % 294(@)(@@) % فتأمل الدنيا ولاتعجب لها % % واعجب لمن أضحى إليها راكنا % % 295(@)(@@) % قضى أبو العباس خلك نحبه % فجعلت نحبك دمعك المتهاتنا % % 296(@)(@@) % وودت أنك منه أول لاحق % % أوكنت مضمونا إليه مقارنا % % 297(@)(@@) % لكن أبى ذاك الإله فلا ترد % مالم يرد لقضائه وارض العزاء مخادنا % % 298(@)(@@) % لاتسجنن الهم عندك إنه % % مازال مسجونا يعذب ساجنا % % 299(@)(@@) % واصبر كما أمر المليك فإنما % % يهدي المدين إذا أطاع الدائنا % % 300(@)(@@) % والله يمنحك الخلود مجاورا % أخيك في جناته ومساكنا % % PageV01P4900 301(@)(@@) % من بعد أن تحيا حياة ممتع % % لا كالمشيع علو بين ظعائنا % % 302(@)(@@) % مامات خلك يوم زار ضريحه % % بل يوم زار قوابلا وحواضنا % % 303(@)(@@) % بل منذ أودع من أبيه وأمه % مستودعيه فكن لذلك فاطنا % % 304(@)(@@) % بل قد يمت دون الألى فوق الثرى % % نطق البيان مكاتبا وملاسنا % % 305(@)(@@) % مازال خلك ميتا ولميت % في الميتين مصاهرا ومخاتنا % % 306(@)(@@) % مات الخلائق مذ نعاهم ربهم % % بل مذ رأت عين قرينا بائنا % % 307(@)(@@) % أفللتقدم والتأخر يمتري % % عينيك أسراب الدموع هواتنا % % 308(@)(@@) % ساق الخليل إلى الخليل فناؤه % % ليكون مدفونا له أو دافنا % % 309(@)(@@) % ولربما اختطفا جميعا خطفة % والدهر أخطف ماتراه محاجنا % % 310(@)(@@) % ولما جلوت صفاح قلبك واعظا % % إني رأيت عليه رينا رائنا % % PageV01P4901 311(@)(@@) % لكنه التذكير يهديه الفتى % % لأخيه حين يرى أساه راحنا % % 312(@)(@@) % ولئن عبأت لك الأسى لعلى امرئ % أمسى الحزين عليه لا المتحازنا % % 313(@)(@@) % ولئن أمرتك بالتجلد ظاهرا % لقد امتلأت عليه شجوا باطنا % % 314(@)(@@) % ولقد أقول غداة قام نعيه % % هيجت لي شجنا لعمرك شاجنا % % 315(@)(@@) % صفن الجواد وقد يطول جراؤه % % ولتسمعن بكل جار صافنا % % 316(@)(@@) % وطوى العتيق جناحه في وكنه % % وقصار ذي الطيران يلقى واكنا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1170# % % 317(@)(@@) % والحي يرتع ثم يسرع برهة % فإذا قضى أربيه أمسى عاطنا % % 318(@)(@@) % مات الذي نال العلا متناولا % % من بعد مانال العلا متطامنا % % 319(@)(@@) % مات الذي كان النصيح مساترا % مات الذي كان النصير معالنا % % 320(@)(@@) % مات الذي فتح الفتوح ملاينا % لاعاجزا عن فتحهن مخاشنا % % PageV01P4902 321(@)(@@) % مات الذي أحيا النفوس بيمنه % % وأمات منها للملوك ضغائنا % % 322(@)(@@) % مات الذي صان الدماء ولم يزل % عن كل إثم للأئمة صائنا % % 323(@)(@@) % مات الذي أغناه لطف حويله % عن أن يهز صوارما وموارنا % % 324(@)(@@) % مات الذي رأب الثأي متعاليا % عن أن يصادف ضاربا أو طاعنا % % 325(@)(@@) % يا أحمد المحمود إن عيوننا % % أضحت كما أمست عليك سخائنا % % 326(@)(@@) % يا أصبغي الملك إن ظواهرا % أكسفتها منا وإن بواطنا % % 327(@)(@@) % تلك المفارح أصبحت % % قلبت هموما للعظام شوافنا % % 328(@)(@@) % لا تبعدن وإن نزلت بمنزل % أمسى بعيدا عن أودك شاطنا % % 329(@)(@@) % فلقد أصابتك الخطوب حواقدا % ولقد أشاطتك المنون ضواغنا % % 330(@)(@@) % كنت الذي تقتادهن على الوجى % % وتذلهن مخاطما ورواسنا % % PageV01P4903 331(@)(@@) % سقيت معونتك الوزير فلم تكن % % إلا معاون جمة ومعادنا % % 332(@)(@@) % وأثيب سعيك للإمام فلم تزل % % لثغوره بجنود رأيك شاحنا % % 333(@)(@@) % ما كانت العزاء تزحم منكم % % إلا جبالا لا تزول ركائنا % % 334(@)(@@) % ماكانت الللأواء تلقى منكم % % إلا مضابر نوبة ومماتنا % % 335(@)(@@) % لهفي أبا العباس لهفة آمل % كان ارتجاك على الزمان معاونا % % 336(@)(@@) % ولساسة الدنيا أحق بلهفتي % % مني وأولى بالغليل جناجنا % % 337(@)(@@) % لهفي عليك لخطة مرهوبة % ما كنت فيها بالذميم مواطنا % % 338(@)(@@) % لهفي عليم لها إذا أزماتها % % ضاقت على الزول الرحيب معاطنا % % 339(@)(@@) % كم من أعاد قد رقيت فلم تدع % فيهم رقاك الشافيات مداهنا % % 340(@)(@@) % أطفأت نارهم وكن نوائرا % وأبحت حقدهم وكان دواجنا % % PageV01P4904 341(@)(@@) % متألفا لهم تألف حول % لو شاء سير بالقفار سفائنا % % 342(@)(@@) % متلطفا لهم تلطف قلب % لو شاء شاد على البحار مدائنا % % 343(@)(@@) % ماكان سعيك للخلائف كلها % % إلا معاقل تارة ومعادنا % % 344(@)(@@) % إن نابهم خطب درأت وإن بغوا % % مالا ملأت خزائنا وخزائنا % % 345(@)(@@) % كم قد فتحت لهم عدوا جامحا % كم قد حرثت لهم خراجا حارنا % % 346(@)(@@) % أنشرت آراء وكن هوامدا % وأثرت أموالا وكن دفائنا % % 347(@)(@@) % كانت فتوحك كلها ميمونة % تأتي وليست للحتوف قرائنا % % 348(@)(@@) % بالخيل لكن لاتزال صوافنا % والبيض لكن لاتزال كوامنا % % 349(@)(@@) % عجبا لفتحك بالسيوف 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1171# كوامنا % تلك الفتوح وبالجياد صوافنا % % 350(@)(@@) % مازلت تجتنب الدماء وسفكها % % فإذا طغت وجدتك حينا حائنا % % PageV01P4905 351(@)(@@) % تضع السلاح تأثما وتكرما % وتظل بالرأي السديد مزابنا % % 352(@)(@@) % فكأنك المقدار يخفى شخصه % % ويحرك الأشياء طرا ساكنا % % 353(@)(@@) % ولئن وضعت القوس ثم لمعتد % إن شاء عبأ للرماء كنائنا % % 354(@)(@@) % ولئن وضعت الرمح ثم لمصدر % إن شاء هيأ للطعان مطاعنا % % 355(@)(@@) % ولئن وضعت السيف ثم لمنجد % إن شاء وطأ للضراب أماكنا % % 356(@)(@@) % يغدو المقاتل ماهنا لاماهرا % أبدا وتعدو ماهرا لاماهنا % % 357(@)(@@) % كم قد ظفرت مكاتبا ومخاطبا % % حتى خشيت مضاربا ومطاعنا % % 358(@)(@@) % كم قد غلبت ذوي الشقاق مسالما % لاسافكا لدم ولكن حاقنا % % 359(@)(@@) % فوقيت من دنس الدماء أئمة % ووقيت من قومت ركنا دائنا % % 360(@)(@@) % نفلتهم أموالهم ودماءهم % % ونساءهم فتركتهن حواضنا % % PageV01P4906 361(@)(@@) % ولو التووا لرميتهم بمكائد % أخفى من الأجل الحبيس مكامنا % % 362(@)(@@) % كم قسور قلمت منه أظافرا % تقليم من لم نخف منه براثنا % % 363(@)(@@) % ومنيع ظهر راح قد حملته % % تحميل من لم تدم منه سناسنا % % 364(@)(@@) % فغدا سليم القلب غير مضاغن % ولربما خنع العدو مضاغنا % % 365(@)(@@) % ملك الرقاب أخو القتال مخاشنا % وملكت أفئدة الرجال ملاينا % % 366(@)(@@) % أحسنت أدواء الأمور مفاحشا % بالسيف أن تلي الأمور محاسنا % % 367(@)(@@) % فغدوت تعتد القلوب مصافيا % % وسواك يعتد القلوب مشاجناص ولع الزمان بأن يحرك ساكنا % 368(@)(@@) % وبأن يثير من الأوابد كامنا % % وهم الأحبة من أقام ترحلوا % % 369(@)(@@) % عنه فكلهم يودع ظاعنا % % أضحى الزمان مدائنا لك فيهم % 370(@)(@@) % ولعل رشدا إن قضيت مدائنا % % فأرى الليالي ما نقضن معاهدا % PageV01P4907 371(@)(@@) % فيما أتين ولا هجمن مآمنا % % رحلن إلفك عن مساكن قلعة % 372(@)(@@) % كانت لقوم آخرين مساكنا % % فاقن الحياء أبا الحسين فلم يكن % % 373(@)(@@) % شيء فري لم تخله كائنا % % كان الذي قد كنت توقن أنه % % 374(@)(@@) % سيكون فاجزع واقنا لا واهنا % % هون عليك المقطعات ولا تكن % % 375(@)(@@) % بنصيحة من مخلص متهاونا % % إن الحوادث قد عدون فواجعا % 376(@)(@@) % فاشدد إزارك لا يكن فواتنا % % لا تنكرن من المصائب منا أتى % % 377(@)(@@) % حتى كأنك كنت منها آمنا % % أنكره إنكار امرىء عرف الردى % % 378(@)(@@) % ورأى النفوس بأن يمتن رهائنا % % إني نكرت على الليالي أن أتت % 379(@)(@@) % ما قد أتته لم يكن ظنائنا % % هل كنت غرا بالنوائب قبلها % % 380(@)(@@) % أم خلتهن لما تحب 
