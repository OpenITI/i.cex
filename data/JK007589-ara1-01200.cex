urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1113# فيه % % 115(@)(@@) % غير أن ليس ذاك في الإمكان % % وحقيق في الحكم أن يوجب ال % % 116(@)(@@) % إيوان حق ابن صاحب الإيوان % % فصل مجد الأمير في المجد يحكي % % 117(@)(@@) % فضل ذاك البنيان في البنيان % % لاتخادع فإنما يوم نعم % % 118(@)(@@) % يوم نعم الأمير لا النعمان % % لو رآه النعمان أو ملك النع % 119(@)(@@) % مان مااستنكفا من الإذعان % زخرفت يوم نعمه حجرات % 120(@)(@@) % جد موطوءة من الضيفان % % طال غشيانهم حراها إلى أن % PageV01P4670 121(@)(@@) % أشكلوا من حلولها القطان % % حجرات متيمات بناها % % 122(@)(@@) % من فضول المعروف أكرم باني % % لم يكن يبتني المساكن حتى % % 123(@)(@@) % يتقن المجد أيما إتقان % فأذيلت فيها تهاويل رقم % 124(@)(@@) % قائمات بزينة المزدان % % ثم قام الكماة صفين من كل % 125(@)(@@) % ل عظيم في قومه مرزبان % % كلهم مطرق إلى الأرض مغض % 126(@)(@@) % وعلى سيفه هنالك حاني % % هيبة للأمير مامن عرته % 127(@)(@@) % بملوم ملامة الهيبان % بسط العذر أن ذاك مقام % 128(@)(@@) % مثله استوهل الجريء الجنان % وتجلى على السرير جبين % 129(@)(@@) % ذو شعاع يجول دون العيان % % يمكن العين لمحة ثم ينهى % % 130(@)(@@) % طرفها عن إدامة اللحظان % فله منه حاجب قد حماه % % PageV01P4671 131(@)(@@) % كل عين ترومه بامتهان % عقد التاج منه فوق هلال % 132(@)(@@) % ليس مثل الهلال في النقصان % % بل هو البدر كللته سعود % 133(@)(@@) % طالعات في ليلة إضحيان % فاستوى فوق عرشه بوقار % 134(@)(@@) % وبحلم من الحلوم الرزان % % وأصاخت له السماوات والأر % 135(@)(@@) % ض ومن فيهما من السكان % ثم قام الممجدون مثولا % 136(@)(@@) % ضاربين الصدور بالأذقان % ليس من كبرياء فيه ولكن % % 137(@)(@@) % كل وجه لذلك الوجه عاني % % فثنوا سؤدد الأمير وعدوا % % 138(@)(@@) % فيه آلاءه بكل لسان % حين لم يجشموا التريد لا بل % % 139(@)(@@) % ماتعدوا ماحصل الكاتبان % جل مايحمل السرير هناكم % % 140(@)(@@) % منه واسم نقله الشفتان % % فقضوا من مقالهم ماقضوه % % PageV01P4672 141(@)(@@) % ثم آبوا بالرفد والحملان % بعدما أرتعوا الأنامل فيما % % 142(@)(@@) % لاتعداه شهوة الشهوان % % من خوان كأنه قطع الرو % 143(@)(@@) % ض وإن كان في مثال خوان % فوقه الطير في الصحاف وحاشا % % 144(@)(@@) % ذلك الذي من جفاء الجفان % مارأى مثله ابن جدعان لابل % % 145(@)(@@) % مارأى مثله بنوالديان % ثم سام الأمير سوم الملاهي % % 146(@)(@@) % وخلا بالمدام والندمان % % لاالمدام الحرام لكن حلال % 147(@)(@@) % سور نار يحثها طابخان % شارك الخمر في اسمها ليس إلا % % 148(@)(@@) % أن أداموه مثلها في 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1114# الدنان % % وحكاها في اللون والريح والطع % % 149(@)(@@) % م ولطف الدبيب في الجسمان % % فهو لاخمر في الحقيقة لكن % % 150(@)(@@) % هو خمر في الظن والحسبان % % لم تلحه النار التي طبخته % % PageV01P4673 151(@)(@@) % بل أفادته صبغة الأرجوان % % وقيان كأنها أمهات % 152(@)(@@) % عاطفات على بنيها حواني % % مطفلات وما حملن جنينا % 153(@)(@@) % مرضعات ولسن ذات لبان % ملقمات أطفالهن ثديا % 154(@)(@@) % ناهدات كأحسن الرمان % % مفعمات كأنها حافلات % 155(@)(@@) % وهي صفر من درة الألبان % % كل طفل يدعى بأسماء شتى % % 156(@)(@@) % بين عود ومزهر وكران % أمه دهرها تترجم عنه % % 157(@)(@@) % وهو بادي الغنى عن الترجمان % % غير أن ليس ينطق الدهر إلا % 158(@)(@@) % بالتزام من أمه واحتضان % % أوتي الحكم والبيان صبيا % % 159(@)(@@) % مثل عيسى ابن مريم ذي الحنان % فتراه يفري الفري بلفظ % 160(@)(@@) % قائم الوزن عادل الميزان % لوتسلى به حديثة رزء % PageV01P4674 161(@)(@@) % لشفي داء صدرها الحران % عجبا منه كيف يسلي ويلهي % % 162(@)(@@) % مع تهييجه على الأشجان % % يذكر الشجو مسليا عنه والسل % 163(@)(@@) % وان مما يكون في النسيان % % فترى في الذي يصيخ إليه % % 164(@)(@@) % أمرات المحزون والجذلان % لو رقا المخبتين أصغوا إليه % % 165(@)(@@) % ولجروا له ذيول افتتان % يعتري السامعين منه حنين الني % % 166(@)(@@) % ب فرقتهن بعد اقتران % أو حنين العوذ الروائم بالده % 167(@)(@@) % ناء أفردتهن من جيران % فكأن القلوب إذ ذاك يذكر % 168(@)(@@) % ن عهودا لهن في أوطان % فنفثن السماع في أذن خرق % % 169(@)(@@) % أريحي عليه ثر البنان % % وتغنته بالمدائح فيه % % 170(@)(@@) % كل غيداء غادة مفتان % ذات صوت تهزه كيف شاءت % PageV01P4675 171(@)(@@) % مثل ماهزت الصبا غصن بان % % يتثنى فينفض الطل عنه % % 172(@)(@@) % في تثنيه مثل حب الجمان % % ذلك الصوت في المسامع يحكي % % 173(@)(@@) % ذلك الغصن في العيون الرواني % % جهوري بلا جفاء على السم % 174(@)(@@) % ع مشوب بغنة الغزلان % % فيه بم وفيه زير من النع % 175(@)(@@) % م وفيه مثالث ومثاني % % فتراه يجل في السمع حينا % % 176(@)(@@) % وتراه يدق في الأحيان % % رخمته ورقرقته وضاهى % % 177(@)(@@) % فعلها الأحمران والأسمران % فهو يحكي ترقرق النهي في الري % % 178(@)(@@) % ح لعيني ذي غلة صديان % % يلج السمع مستمرا إلى القله يمن الله طلعة المهرجان % 179(@)(@@) % كل يمن على الأمير الهجان % وأراه السرور فيه خصوصا % 180(@)(@@) % وعموما في سائر الأزمان % % مارأت مثل مهرجانك عينا % % PageV01P4676 181(@)(@@) % أردشير ولا أنوشروان % مهرجان كأنما صورته % 182(@)(@@) % كيف 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1115# شاءت مخيرات الأماني % % عانيا دهره بحب حبيب % % 183(@)(@@) % وفؤادي ببغضك الدهر عاني % % لو تراءى لجنة الخلد صبت % 184(@)(@@) % واشرأبت بجيدها الحسان % خلقت للأمير فيه سماء % 185(@)(@@) % لم يكن بدء خلقها من دخان % ونجوم مسعودة لم يصبها % % 186(@)(@@) % نحس بهرام لا ولا كيوان % % وأديل السرور واللهو فيه % % 187(@)(@@) % من جميع الهموم والأحزان % % لبست فيه حلي حفلتها الدن % 188(@)(@@) % يا وزافت في منظر فتان % % وأذالت من وشيها كل برد % 189(@)(@@) % كان قدما تصونه في الصوان % % وتبدت مثل الهدي تهادى % % 190(@)(@@) % رادع الجيب عاطر الأبدان % % فهي في زينة البغي ولكن % % PageV01P4677 191(@)(@@) % هي في عفة الحصان الرزان % % كادت الأرض يوم ذلك تفشي % % 192(@)(@@) % سر بطنانها إلى الظهران % % فتحلي ظهورها مايواري % % 193(@)(@@) % بطنها من معادن العقيان % % وتري فاخر الزبرجد واليا % % 194(@)(@@) % قوت حصباءها بكل مكان % % وتبوح البحار بالدر بوحا % 195(@)(@@) % وبما أضمرت من المرجان % % ويرد الشباب في كل شيخ % 196(@)(@@) % ويدب النشور في كل فاني % % ويجوز الخريف وهو ربيع % 197(@)(@@) % وتسور المياه في العيدان % % وتحيي متونها بثمار % 198(@)(@@) % يانعات قطوفهن دواني % % وتغنى الحمام بعد وجوم % % 199(@)(@@) % بفنون اللحون في الأغصان % وتعود الرياض مقتبلات % 200(@)(@@) % ناعمات الشكير والأفنان % % حفلة بالأمير من كل شيء % PageV01P4678 201(@)(@@) % واحتشادا له من المهرجان % % عجبا كيف لم يكن ذاك فيه % % 202(@)(@@) % وائتلاف المياه والنيران % % عجبا كيف لم يكن ذاك فيه % % 203(@)(@@) % واصطلاح الأنيس والجنان % % أيهذا الأمير أسعدك الل % 204(@)(@@) % ه وأبقاك ماجرى العصران % % ليرى المهرجان فيك سلوا % 205(@)(@@) % فله فيك أعظم السلوان % % إن عداه الربيع واستأثر الني % 206(@)(@@) % روز من دونه بذاك الأوان % % فلذكر الأمير أطيب نشرا % 207(@)(@@) % من خزامى الربيع والأقحوان % % ولكف الأمير أحمد منه % % 208(@)(@@) % أثرا في النبات والحيوان % % ولوجه الأمير أحسن مما % % 209(@)(@@) % يكتسيه من وشيه الألوان % % إن عيدا يكون حليا عليه % % 210(@)(@@) % يك عن كل ماسواك لغان % % مااستبنا فقد الربيع عليه % % PageV01P4679 211(@)(@@) % لا ولا فقد صوبه الهتان % % ماخلا من محاسن الزهر الغض % 212(@)(@@) % ض ولا من مطايب الريحان % % ليس فقد الربيع مادمت حيا % 213(@)(@@) % ياربيع الأنام بالمستبان % % خلفت كفك الربيع فجادت % % 214(@)(@@) % بنداها حتى التقى الثريان % % شبب المهرجان لهوك فيه % % 215(@)(@@) % فغدا من غطارف الشبان % % وكذا النيروز رد عليه % % 216(@)(@@) % بك شرخ الشباب ذي الريعان % % ولذكرت ذا وذاك جميعا % 217(@)(@@) % سنن الملك في 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1116# بني ساسان % % عمرا برهة على دين كسرى % % 218(@)(@@) % وهما الآن بعده مسلمان % % لم يكونا ليرضيا غير دين % 219(@)(@@) % يرتضيه الأمير في الأديان % وبعز الأمير في الناس عزا % 220(@)(@@) % فيهم إذ هما له موليان % فعلا منظريهما هيبة العز % PageV01P4680 221(@)(@@) % ز ونور الإسلام والإيمان % وأحباك حب مولى شكور % 222(@)(@@) % فهما وامقان بل عاشقان % % كل يوم وليلة فرط شوق % % 223(@)(@@) % ونزاع إليك يطلعان % % فبهذا وذاك حتى لحينا % % 224(@)(@@) % غلة فوق غلة الظمآن % لو أصابا إلى الغلاط سبيلا % % 225(@)(@@) % غالطا الحاسبين في الحسبان % % أو يخلي عنان ذاك وهذا % % 226(@)(@@) % سبقا موقتيهما في الزمان % % ولود إذا هما بك حلا % 227(@)(@@) % لو يقيمان ثم لا يرحلان % % وعزيز عليهما أن يكونا % % 228(@)(@@) % عنك لولا الإزعاج يرتحلان % % لو أطافا هناك للدهر قسرا % 229(@)(@@) % حارنا سابقيه أي حران % ولكادا من التنافس في وج % % 230(@)(@@) % هك خير الوجوه يجتمعان % % ولهم الورد المظاهر والنر % PageV01P4681 231(@)(@@) % جس شحا عليك يلتقيان % % وإخال الإيوان لو كان يسعى % % 232(@)(@@) % جاء سعيا إليك قبل الأذان % % ولوافاك كي تمهرج فيه % % 233(@)(@@) % غير أن ليس ذاك في الإمكان % % وحقيق في الحكم أن يوجب ال % % 234(@)(@@) % إيوان حق ابن صاحب الإيوان % % فصل مجد الأمير في المجد يحكي % % 235(@)(@@) % فضل ذاك البنيان في البنيان % % لاتخادع فإنما يوم نعم % % 236(@)(@@) % يوم نعم الأمير لا النعمان % % لو رآه النعمان أو ملك النع % 237(@)(@@) % مان مااستنكفا من الإذعان % زخرفت يوم نعمه حجرات % 238(@)(@@) % جد موطوءة من الضيفان % % طال غشيانهم حراها إلى أن % 239(@)(@@) % أشكلوا من حلولها القطان % % حجرات متيمات بناها % % 240(@)(@@) % من فضول المعروف أكرم باني % % لم يكن يبتني المساكن حتى % % PageV01P4682 241(@)(@@) % يتقن المجد أيما إتقان % فأذيلت فيها تهاويل رقم % 242(@)(@@) % قائمات بزينة المزدان % % ثم قام الكماة صفين من كل % 243(@)(@@) % ل عظيم في قومه مرزبان % % كلهم مطرق إلى الأرض مغض % 244(@)(@@) % وعلى سيفه هنالك حاني % % هيبة للأمير مامن عرته % 245(@)(@@) % بملوم ملامة الهيبان % بسط العذر أن ذاك مقام % 246(@)(@@) % مثله استوهل الجريء الجنان % وتجلى على السرير جبين % 247(@)(@@) % ذو شعاع يجول دون العيان % % يمكن العين لمحة ثم ينهى % % 248(@)(@@) % طرفها عن إدامة اللحظان % فله منه حاجب قد حماه % % 249(@)(@@) % كل عين ترومه بامتهان % عقد التاج منه فوق هلال % 250(@)(@@) % ليس مثل الهلال في النقصان % % بل 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1117# هو البدر كللته سعود % PageV01P4683 251(@)(@@) % طالعات في ليلة إضحيان % فاستوى فوق عرشه بوقار % 252(@)(@@) % وبحلم من الحلوم الرزان % % وأصاخت له السماوات والأر % 253(@)(@@) % ض ومن فيهما من السكان % ثم قام الممجدون مثولا % 254(@)(@@) % ضاربين الصدور بالأذقان % ليس من كبرياء فيه ولكن % % 255(@)(@@) % كل وجه لذلك الوجه عاني % % فثنوا سؤدد الأمير وعدوا % % 256(@)(@@) % فيه آلاءه بكل لسان % حين لم يجشموا التريد لا بل % % 257(@)(@@) % ماتعدوا ماحصل الكاتبان % جل مايحمل السرير هناكم % % 258(@)(@@) % منه واسم نقله الشفتان % % فقضوا من مقالهم ماقضوه % % 259(@)(@@) % ثم آبوا بالرفد والحملان % بعدما أرتعوا الأنامل فيما % % 260(@)(@@) % لاتعداه شهوة الشهوان % % من خوان كأنه قطع الرو % PageV01P4684 261(@)(@@) % ض وإن كان في مثال خوان % فوقه الطير في الصحاف وحاشا % % 262(@)(@@) % ذلك الذي من جفاء الجفان % مارأى مثله ابن جدعان لابل % % 263(@)(@@) % مارأى مثله بنوالديان % ثم سام الأمير سوم الملاهي % % 264(@)(@@) % وخلا بالمدام والندمان % % لاالمدام الحرام لكن حلال % 265(@)(@@) % سور نار يحثها طابخان % شارك الخمر في اسمها ليس إلا % % 266(@)(@@) % أن أداموه مثلها في الدنان % % وحكاها في اللون والريح والطع % % 267(@)(@@) % م ولطف الدبيب في الجسمان % % فهو لاخمر في الحقيقة لكن % % 268(@)(@@) % هو خمر في الظن والحسبان % % لم تلحه النار التي طبخته % % 269(@)(@@) % بل أفادته صبغة الأرجوان % % وقيان كأنها أمهات % 270(@)(@@) % عاطفات على بنيها حواني % % مطفلات وما حملن جنينا % PageV01P4685 271(@)(@@) % مرضعات ولسن ذات لبان % ملقمات أطفالهن ثديا % 272(@)(@@) % ناهدات كأحسن الرمان % % مفعمات كأنها حافلات % 273(@)(@@) % وهي صفر من درة الألبان % % كل طفل يدعى بأسماء شتى % % 274(@)(@@) % بين عود ومزهر وكران % أمه دهرها تترجم عنه % % 275(@)(@@) % وهو بادي الغنى عن الترجمان % % غير أن ليس ينطق الدهر إلا % 276(@)(@@) % بالتزام من أمه واحتضان % % أوتي الحكم والبيان صبيا % % 277(@)(@@) % مثل عيسى ابن مريم ذي الحنان % فتراه يفري الفري بلفظ % 278(@)(@@) % قائم الوزن عادل الميزان % لوتسلى به حديثة رزء % 279(@)(@@) % لشفي داء صدرها الحران % عجبا منه كيف يسلي ويلهي % % 280(@)(@@) % مع تهييجه على الأشجان % % يذكر الشجو مسليا عنه والسل % PageV01P4686 281(@)(@@) % وان مما يكون في النسيان % % فترى في الذي يصيخ إليه % % 282(@)(@@) % أمرات المحزون والجذلان % لو رقا المخبتين أصغوا إليه % % 283(@)(@@) % ولجروا له ذيول افتتان % يعتري السامعين منه حنين الني % % 284(@)(@@) % ب فرقتهن بعد اقتران % أو حنين العوذ الروائم بالده 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1118# % 285(@)(@@) % ناء أفردتهن من جيران % فكأن القلوب إذ ذاك يذكر % 286(@)(@@) % ن عهودا لهن في أوطان % فنفثن السماع في أذن خرق % % 287(@)(@@) % أريحي عليه ثر البنان % % وتغنته بالمدائح فيه % % 288(@)(@@) % كل غيداء غادة مفتان % ذات صوت تهزه كيف شاءت % 289(@)(@@) % مثل ماهزت الصبا غصن بان % % يتثنى فينفض الطل عنه % % 290(@)(@@) % في تثنيه مثل حب الجمان % % ذلك الصوت في المسامع يحكي % % PageV01P4687 291(@)(@@) % ذلك الغصن في العيون الرواني % % جهوري بلا جفاء على السم % 292(@)(@@) % ع مشوب بغنة الغزلان % % فيه بم وفيه زير من النع % 293(@)(@@) % م وفيه مثالث ومثاني % % فتراه يجل في السمع حينا % % 294(@)(@@) % وتراه يدق في الأحيان % % رخمته ورقرقته وضاهى % % 295(@)(@@) % فعلها الأحمران والأسمران % فهو يحكي ترقرق النهي في الري % % 296(@)(@@) % ح لعيني ذي غلة صديان % % يلج السمع مستمرا إلى القل % % 297(@)(@@) % ب بلا آذن ولااستئذان % % غير مبهورة المراجيع كلا % 298(@)(@@) % إنما البهر آفة في السمان % % ليس تخفي أنفاسها أنها أن % % 299(@)(@@) % فاس مهضومة الحشا خمصان % % بين خلق الضئيلة الشختة الجس % 300(@)(@@) % م وخلق الثقيلة المبدان % % فهي كالسابق المضمر يجري % % PageV01P4688 301(@)(@@) % لاحق الأيطلين غوج اللبان % % صيغ من طبع صوتها كل لحن % % 302(@)(@@) % معها من لحون تلك الأغاني % % مثل ماصيغ لحن ساق وحر % 303(@)(@@) % من طباع الحمامة المرنان % % فأقام الأمير في ظل يوم % 304(@)(@@) % فيه من كل نعمة زوجان % % أعجمي آيينه عربي % 305(@)(@@) % مجده ينتمي إلى عدنان % % بمحل ترود عيناه منه % % 306(@)(@@) % بين مرعى الظباء والحيتان % % وأفاد الجلاس من سيب كفي % 307(@)(@@) % ه وألفاظه الصياب الرصان % % وكذا من ذكت أياديه كانت % % 308(@)(@@) % للمفيدين منه فائدتان % % يابن سيف الملوك طاب لك العي % 309(@)(@@) % ش برغم العدو ذي الشنآن % % قد لعمري أنى لمثلك أن ين % 310(@)(@@) % عم تحت الظلال والأكنان % % إن تصب يوم لذة فبيوم % PageV01P4689 311(@)(@@) % بعد يوم شهدته أرونان % % فاله في المهرجان لهو مريح % % 312(@)(@@) % مستجم لذلك الديدان % حان أن يستريح عود المعالي % % 313(@)(@@) % ويرى وهو ضارب بالجران % % أصلح الآلة التي لست تنفك % 314(@)(@@) % ك تقاسي بها العلا وتعاني % % فبحق أقول إن من الإح % 315(@)(@@) % سان إصلاح آلة الأحسان % % لا عدمناك ساقيا ترك السق % 316(@)(@@) % ي لشد الدلاء بالأشطان % % ريث مااستحكمت له ثم أدلى % % 317(@)(@@) % دلوه فاستقى بها غير واني % % إن تثب جسمك النعيم فبالإت 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1119# % 318(@)(@@) % عاب في حال راحة الأبدان % % وبحمل الثقل الثقيل عليه % % 319(@)(@@) % يوم غرم ويوم حرب عوان % % أو تثبت عينك الإجابة في نز % 320(@)(@@) % هة وجه يروق أو بستان % % فبإغضائها عن السوء والفح % % PageV01P4690 321(@)(@@) % شاء والذنب حين يجنيه جاني % % ومراعاتها حمى الدين والمل % 322(@)(@@) % ك إذا طاب مرقد الوسنان % % وبما لاتزال تقذى إلى أن % % 323(@)(@@) % تتجلى خصاصة الإخوان % % شهد المجد أن هاتيك عين % 324(@)(@@) % حق عين المحافظ اليقظان % % وقليل لمثلها أن تلهى % % 325(@)(@@) % بالبساتين والوجوه الحسان % % أوتيت أذنك السماع فأدنى % % 326(@)(@@) % حق إصغائها إلى اللهفان % % وبما لا يزال يقرعها في ال % % 327(@)(@@) % حرب وقع السيوف والمران % % أذن منك قل ماتدع العل % 328(@)(@@) % ياء فيها فضلا لشدو القيان % % يالها من جوارح معملات % 329(@)(@@) % متعبات في طاعة الرحمن % % حقها لو يسلف المحسن الجن % 330(@)(@@) % نة تسليفها نعيم الجنان % كل يوم لنا طلائع منها % % PageV01P4691 331(@)(@@) % ترقب الدهر غارة الحدثان % % نحن ماحاطنا بها الله نرعى % % 332(@)(@@) % في طمأنينة وظل أمان % % مليتك الملوك سيف جلاد % 333(@)(@@) % وعصا رعية ورمح طعان % % أنت راعي الرعيان طورا وطورا % % 334(@)(@@) % أنت راعي رعية الرعيان % % قد كفيت الرعاء والشاء طوري % 335(@)(@@) % عدوات الأسود والذؤبان % % ولعمر المغنياتك في مد % 336(@)(@@) % حك ماقلن فيك من بهتان % % ماتغنين في مديحك إلا % % 337(@)(@@) % ماتغنت عصائب الركبان % % لم يكن يرتضيه سمعك للصن % 338(@)(@@) % عة حتى يسير في البلدان % % ولشعر فيه مديحك أحلى % % 339(@)(@@) % من رقيق النسيب في الألحان % % ولعمري وما أقول بظن % % 340(@)(@@) % فيك لكن بغاية الإيقان % % مااحتبيت السماع والشعر وجدا % PageV01P4692 341(@)(@@) % بالغواني ولابوصف المغاني % % بل لأن السماع والشعر قدما % 342(@)(@@) % بالندى آمران مؤتمران % % وعلى كل سؤدد من حفاظ % 343(@)(@@) % ووفاء ونجدة حاديان % % يعجبان الكريم جدا وليسا % % 344(@)(@@) % من شؤون الهلباجة المبطان % % هل تري ماأرى سراة معد % 345(@)(@@) % وصناديد أختها قحطان % % إن تلافيت مجدهم بعدما شذ % 346(@)(@@) % د فأضحى مدون الديوان % % ولقد كان أهله ضيعوه % % 347(@)(@@) % وأحلوه منزل الهجران % لبث الشعر حقبة وهو مقصى % % 348(@)(@@) % عندهم نازل بدار هوان % % فبذلت الطريف فيه التا % % 349(@)(@@) % لد واخترته على القنيان % % وتتبعته وقد عاد فلا % % 350(@)(@@) % فى أقاصي البلاد بعد الأداني % % ورعيت العلا على كل حي % % PageV01P4693 351(@)(@@) % رعي لامغفل ولامتواني % % لالقربى ولادة جمعتكم % % 352(@)(@@) % أين لاأين يلتقي النسبان % % بل تأولت أن كل شريفي % 353(@)(@@) % ن 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1120# بعيدي قرابة أخوان % % إن يكونوا أباعدا فالمعالي % % 354(@)(@@) % نسب بينهم وبينك داني % % لافقدناك ياحفيظ حفيظ ال % % 355(@)(@@) % مجد مالاح في الدجى الفرقدان % % أصبح الشعر شاكرا لك دون الن % % 356(@)(@@) % ناس نعماء منعم محسان % % أنت ترعاه وهو يرعى بك المج % % 357(@)(@@) % د فيا بئس مارعى الراعيان % % كل مدح قد قيل في الناس قدما % 358(@)(@@) % لك فيه بحقك الثلثان % % وبهذا قضى لك الشعر شكرا % 359(@)(@@) % لك ياخير قيم ومعاني % % فمديح الملوك في آل نصر % 360(@)(@@) % ومديح الملوك من غسان % % ومديح الملوك من آل حرب % % PageV01P4694 361(@)(@@) % ثم من بعدهم بني مروان % ومديح الممدحين من النا % % 362(@)(@@) % س جميعا في كل حين وآن % % لك فيه دون الألى ورثوهم % % 363(@)(@@) % من سهام ثلاثة سهمان % % فيك قالت أئمة الشعر ماقا % % 364(@)(@@) % لت بلا رؤية ولالقيان % % كامرىء القيس قرمهم وزهير % 365(@)(@@) % وزياد أخي بني ذبيان % وكأوس فصيحهم ولبيد % 366(@)(@@) % وعبيد أخي بني دودان % % كلهم بالمديح إياك يعني % % 367(@)(@@) % كانيا عنك كان أو غير كاني % % فكأن قد شهدت كل قديم % % 368(@)(@@) % وبكم قد تفاوت الحرسان % % كم قريض في مدح غيرك أضحى % % 369(@)(@@) % لك معناه واسمه لفلان % % أنت أولى به بحكم القوافي % % 370(@)(@@) % من نؤوم عن المعالي هدان % % أين معطي رواة مدح سواه % PageV01P4695 371(@)(@@) % من مثيب المداح بالحرمان % % بوعد البين بين هذين جدا % 372(@)(@@) % كل بعد وخولف النجران % % إن من هزه مديح سواه % 373(@)(@@) % للسدى والندى لغير ددان % % لست أدري ثناك أحلى على الأف % % 374(@)(@@) % واه أم سمعه على الآذان % % فيك أشياء لو وجدن قديما % 375(@)(@@) % نظمتها الملوك في التيجان % ليس للمادحين فيك مديح % 376(@)(@@) % فيه دعوى لهم بلا برهان % % أي فخر أم أي فخر أم أي مجد رفيع % % 377(@)(@@) % لم تكن من سمائه بعنان % % لو يجاري سكيت شأوك أعيا % % 378(@)(@@) % كل طرف وفات كل عنان % لك في البأس والندى عزمات % 379(@)(@@) % جثمات أمضى من الخرصان % % كل مرعى سوى جنابك يرعى % % 380(@)(@@) % فهو مرعى وليس كالسعدان % % لاسؤال من بعد رفدك إلا % % PageV01P4696 381(@)(@@) % كالزنا بعد نعمة الإحصان % % لك مما يعدي على كل دهر % % 382(@)(@@) % إمرة غير إمرة السلطان % % ليس يجني أميرها المال لكن % % 383(@)(@@) % يجتبي حمد من حوى الخافقان % % فبعدواك يرهب الدهر عنا % % 384(@)(@@) % بعد تصميمه على العدوان % أنت ذو الإمرتين 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1121# لاشك فيه % % 385(@)(@@) % فهنيئا دامت لك الإمرتان % % منك ماكان طاهر ذا يميني % 386(@)(@@) % ن يفوقان سائر الأيمان % % وجديرون أن تكون لكم من % % 387(@)(@@) % كل مجد وسؤدد كفلان % % أنت كهل الكهول يوم ترى الرأ % % 388(@)(@@) % ي ويوم الوغى من الفتيان % % لك رأي كأنه رأي شق % 389(@)(@@) % أو سطيح قريعي الكهان % % تستشف الغيوب عما يواري % % 390(@)(@@) % ن بعين جلية الإنسان % % لك جهل في غير ما خفية الجه % PageV01P4697 391(@)(@@) % ل وحلم في غير ماإدهان % % وسكون الشجاع حين يداهي % % 392(@)(@@) % ك مداه وسورة الأفعوان % % قلت للسائلي بمجدك أنى % % 393(@)(@@) % خفيت عنك آية التبيان % % أنت لولا سفال كعبك باد % 394(@)(@@) % لك شمروخ ذي الهضاب أبان % % فإذا شئت أن تراه فأنجد % % 395(@)(@@) % في أعالي نظيره ثهلان % % ليس منه الخمول بك منك والأط % % 396(@)(@@) % واد تخفى عن خاشعات القنان % % حسب جهاله عليه دليلا % % 397(@)(@@) % أنه الفرد ليس يثنيه ثاني % % ليس ممن يضل في الدهم حتى % % 398(@)(@@) % يبتغى بالسؤال والنشدان % % هو شمس الضحى إذا مااستقلت % 399(@)(@@) % لاتماري في ضوئها عينان % % وله إخوة شاءهم إلى المج % 400(@)(@@) % د وإن هم شاؤوه بالأسنان % % هو من بينهم شبيه أبيه % % PageV01P4698 401(@)(@@) % في الندى والحجى وفضل البيان % % وهو من بينهم سمي أبيه % % 402(@)(@@) % غير حرف يزاد للفرقان % % مااسم عبد الإله واسم عبيد ال % % 403(@)(@@) % له لولا التصغير مختلفان % ولئن خالف اسمه اسم أبيه % % 404(@)(@@) % بيسير ماخولف المعنيان % % ملك صغر اسمه أبواه % % 405(@)(@@) % لالنقص ولالتصغير شان % % بل أحبا أن يكسواه خشوعا % 406(@)(@@) % سقي الغيث ذانك الأبوان % % واصفاه بذاك لم يضعاه % % 407(@)(@@) % بل أحلاه في رؤوس الرعان % % فهو لله خاشع مستكين % % 408(@)(@@) % غير ذي نخوة ولاخنزوان % % ذل في عزه لملبسه العز % 409(@)(@@) % زة شكرا لمنة المنان % % فأطاع الإله غير مهين % % 410(@)(@@) % واتقاه تقاة غير جبان % % جاور الله باسمه فاتقاه % % PageV01P4699 411(@)(@@) % ورعى منه أكرم الجيران % % لم يكن مثله يرى الله مقرو % % 412(@)(@@) % نا به في اسمه مع الطغيان % % قل لمن رام شأوه في المعالي % % 413(@)(@@) % لست من خيل ذلك الميدان % % أين شأو البطان لاأين منه % % 414(@)(@@) % فات شأو الخماص شأو البطان % % مخطف مرهف تبين فيه % % 415(@)(@@) % أنه من مضمرات الرهان % % هيأ الله شخصه للمعالي % % 416(@)(@@) % هيئة السيف أو أخيه السنان % % ليس بالخاشع الضئيل ولكن % % 417(@)(@@) % قده الله قد سيف 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1122# يمان % % صفحتاه عقيقتان من البر % 418(@)(@@) % ق وفي مضربيه صاعقتان % % لم يعوض بدن النساء كقوم % % 419(@)(@@) % حرموا حظهم من الأذهان % % جعل العصب في الرجال قديما % % 420(@)(@@) % وكذا الجدل في الحبال المتان % % قد قضى قبلنا بذلك بيت % PageV01P4700 421(@)(@@) % حملته الرواة عن حسان % % في قريض له على الرأي جزل % 422(@)(@@) % قاله في هجاء عبد المدان % % وإذا زاول الأمور فثبت % % 423(@)(@@) % رابط الجأش أيد الأركان % % ويلز القرين منه بألوى % % 424(@)(@@) % مرس الحبل محصد الأقران % % لين للملاينين أبي % 425(@)(@@) % ي إن رأى منهم غموط الليان % % يتثنى للعاطفيه ويعي % % 426(@)(@@) % كاسريه كهيئة الخيزران % % وجواد يطيع في ماله الجو % % 427(@)(@@) % د ويشجي العذال بالعصيان % % يتقي ألسن السؤال بعرض % 428(@)(@@) % وافر مكرم ومال مهان % % هكذا عهدنا بآل زريق % 429(@)(@@) % يشترون الثناء بالأثمان % % ويصونون باللهى حرم الأع % % 430(@)(@@) % راض صون السيوف بالأجفان % % يابني طاهر طهرتم وطبتم % % PageV01P4701 431(@)(@@) % وذكوتم في السر والإعلان % % وحللتم من المعالي محلا % % 432(@)(@@) % يبلغ النجم رفعة أو يداني % % مجدكم كالجبال من بنية الل % 433(@)(@@) % ه ومجد الأنام مثل المباني % % كل مدح في غيركم فمثاب % % 434(@)(@@) % ماأثيبت عبادة الأوثان % % هاكها لاأقول ذاك مدلا % % 435(@)(@@) % قول ذي نخوة بها وامتنان % % بين أثنائها مديح نفيس % % 436(@)(@@) % من لبوس الملوك والفرسان % % ذو قواف كأنها خلق الأص % 437(@)(@@) % داغ في البيض من خدود الغواني % % راق معنى ورق لفظا فيحكي % % 438(@)(@@) % رائق الخمر في رقيق الصحان % % إن تكن سهلة القوافي فليست % 439(@)(@@) % في المعاني بسهلة الوجدان % % فابتذلها في يوم لهوك واعلم % % 440(@)(@@) % أنها بعد من ثياب الصيان % % وابسط العذر في ارتخاص القوافي % % PageV01P4702 441(@)(@@) % واتباعي سهولة الأوزان % % أنت ألجأتني إلى ماتراه % 442(@)(@@) % بالذي فيك من فنون المعاني % % أي وزن وأي حرف روي % 443(@)(@@) % لهما بالمديح فيك يدان % % ضاق عن مأثراتك الشعر إلا % % 444(@)(@@) % فاعلاتن مستفعلن فاعلان % ليس مدح يفي بمدحك إلا % % 445(@)(@@) % صلوات المليك في القرآن % % لا ولاحمد كفء نعماك إلا % % 446(@)(@@) % حمد سبع من الكتاب مثاني % % أنت أعلى من أن توازى بشيء % % 447(@)(@@) % لست ممن يرمي به الرجوان % % فابق واسلم هذه دعوة يح % 448(@)(@@) % ظى بمرجوع نفعها الثقلان % % لم أحاول بها سواك ولكن % % 449(@)(@@) % شملت من يضمه الأفقان % % كيف يعدو مهما أصابك قوما % % 450(@)(@@) % أنت منهم كالروح في الجثمان % % ن % PageV01P4703 البحر : - 1(@)(@@) % يفديك من كل 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1123# محذور أبو حسن % يامن جرى منه مجرى الروح في البدن % % 2(@)(@@) % بالله أحلف لامينا ولا كذبا % % ماغبت إلا بعذر واضح السنن % % 3(@)(@@) % إيناس ضيف دعاني فاستجبت له % % وظلت والحق مقرونين في قرن % 4(@)(@@) % لم أقره بعد مفروض القرى نزلا % % إلا أحاديث ماتسدى من المنن % % 5(@)(@@) % أصغى وظل لما حدثت متهما % % لولا شواهده من وجهك الحسن % % 6(@)(@@) % ومن يحدث بنعمى لانظير لها % % فقد تعرض للتكذيب والظنن % % 7(@)(@@) % وأنت علمتني رعي الحقوق إذا % % نابت وأدبتني بالصبر للمحن % % 8(@)(@@) % وكيف أجفوك لاأصبو إلى أنس % % ينوب عنك ولا آوى ألى سكن % % 9(@)(@@) % ومالقربك عندي ساعة ثمن % أنى وهل لنعيم الدهر من ثمن % % 10(@)(@@) % وهل يبيع امرؤ صحت قريحته % % قرب الأحبة بالتعريج في الدمن % % PageV01P4704 11(@)(@@) % لم يظلم الدهر في أن حاف مجتهدا % عليكم آل عيسى حيف مضطغن % 12(@)(@@) % كنتم شجاه فلم يصمد لغيركم % % ولم يمل سهمه عنكم إلى سنن % 13(@)(@@) % كم من فعال لكم ضد لسيرته % % عنه انطوى لكم طرا على الإحن % % 14(@)(@@) % كم من كسير له أنهضتموه وقد % % أرداه فهو لقى ذو أعظم وهن % 15(@)(@@) % وكم فللتم شبا الأظفار منه بما % % ظاهرتم دون كفيه من الجنن % % 16(@)(@@) % لهفي لأعظمهم حلما وأكرمهم % % خيما وأعصمهم من حادث الزمن % % PageV01P4705 البحر : - 1(@)(@@) % تبحثت عن أخباره فكأنما % % نبشت سداه بعد ثالثة الدفن % 2(@)(@@) % تضوعت الأنباء عنه بنفخة % زويت لها وجهي من الخبث والنتن % % PageV01P4706 البحر : - 1(@)(@@) % قل لفتى لم يزل بصورته % % دون الفعال الجميل مفتونا % % 2(@)(@@) % محاسن الوجه غير زائنة % مادمت بالسيئات مقرونا % % 3(@)(@@) % وأسوء السيئات سلك بال % % جهل حساما عليك مسنونا % % 4(@)(@@) % وذاك أن تستخف وزن فتى % مازال بالراجحين موزونا % % 5(@)(@@) % إن كنت لم تدر ماأتيت به % % فاسأل أناسا سواك يدرونا % % 6(@)(@@) % كدك حرا بغير منفعة % % رأي يراه الرجال مأفونا % % 7(@)(@@) % أقل مايوجب الكريم لمن % % يحرم ألا يذيقه الهونا % % 8(@)(@@) % ورب هون لقيت منك ومن % % حاجبك الدون لم يكن دونا % % 9(@)(@@) % أقسمت تنفك من مطالبتي % % مادام منك اللسان مرهونا % % 10(@)(@@) % فافكك لسانا رهنته بجدا % أو باعتذار فلست قارونا % % PageV01P4707 11(@)(@@) % أزمعت منعي وأنت تطعمني % % وليس ذمي عليك مأمونا % % 12(@)(@@) % فاصدق فإني أراك إن بخلت % % نفسك بالصدق رحت مغبونا % % 13(@)(@@) % ولاتخف أن أضيع إن عدلت % % عنك ركابي فلست مجنونا % % 14(@)(@@) % أما رأيت 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1124# الفجاج واسعة % % والله حيا والرزق مضمونا % % 15(@)(@@) % أظهر من المنع ماتجمجمه % % فشره مايكون مكنونا % % 16(@)(@@) % وانفث من الصدر مايضر به % % لاتترك الداء فيه مدفونا % % 17(@)(@@) % قل اعف عني عثرت في عدتي % % يأتك عفوي وليس ممنونا % % 18(@)(@@) % ولاتقل لي نعم وعزمك لا % % فيلعن الشعر منك ملعونا % % 19(@)(@@) % إني امرؤ إن أراد ميمنتي % % كريم قوم غدوت ميمونا % % 20(@)(@@) % وإن أراد اللئيم مشأمتي % % كنت له طعنة وطاعونا % % PageV01P4708 21(@)(@@) % من دنس العرض بالمواعد والخل % ف جعلت الهجاء صابونا % % 22(@)(@@) % ولست أرمي بنبل قافية % ذوي معاذير لا يجودونا % % 23(@)(@@) % لكنني أنتخي بها أبدا % ذوي مواعيد لا ينيلونا % % 24(@)(@@) % نفيدهم سمعة ومأدبة % % ويطعمونا ولا يفيدونا % % 25(@)(@@) % قد أتعبونا بحوك مدحهم % وبالتقاضي ومايريحونا % % 26(@)(@@) % أولئك الشاهدون أنهم % هم المسيئون والمليمونا % % 27(@)(@@) % كم شامخ باذخ بنعمته % % أضله قبلي المضلونا % % 28(@)(@@) % تركته بالهجاء فلفلة % إذ تركتني مناه كمونا % % 29(@)(@@) % نبئت جحظة يستعير جحوظه % % من فيل شطرنج ومن سرطان % % 30(@)(@@) % ماضر من عيناه تانك ويحه % ألا يكون لوجهه عينان % % PageV01P4709 31(@)(@@) % ناهيك بالشيطان من فزاعة % % وابن استها فزاعة الشيطان % % 32(@)(@@) % يارحمتا لمنادميه تجشموا % % ألم العيون للذة الآذان % % PageV01P4710 البحر : - 1(@)(@@) % لاتلح من تفتنه قينه % فإن تصحيف اسمها فتنه % % 2(@)(@@) % أكدت الحسن بإحسانها % % في مهنة مامثلها مهنه % % 3(@)(@@) % فليجتهد من شاء في عيبها % % فما يساوي قوله تبنه % 4(@)(@@) % ياناقما سوء مجازاتها % % أصبحت عندي نائم الفطنه % 5(@)(@@) % لو قصد العاشق في عشقه % % قصد جزاء مابكى دمنه % 6(@)(@@) % أو كان لا يعشق إلا التي % % تهواه ماكان الهوى محنه % % 7(@)(@@) % ماساءني إعراضه % % عني ولكن سرني % % 8(@)(@@) % سالفتاه عوض % من كل شيء حسن % 9(@)(@@) % عوضني من حسنه % % حسنا فماذا ضرني % % 10(@)(@@) % غير أن القلم الآ % % خر من بري اليدين % % PageV01P4711 10(@)(@@) % فيه للأهل سرور % حين تهدا كل عين % 10(@)(@@) % قلم من خلقة ال % % له جليل الطرفين % % 10(@)(@@) % إن إسماعيل فاعلم % % كاتب ذو قلمين % % 10(@)(@@) % ماقال أن قد عقنيإن إسماعيل فاعلمكاتب ذو قلمين قلم من خلقة الله جليل الطرفين فيه للأهل سرور حين تهدا كل عين غير أن القلم الآخر من بري اليدين % % بالصد إلا برني % % PageV01P4712 البحر : - 1(@)(@@) % الحمد لله يا أبا حسن % ذي النعم السابغات والمنن % 2(@)(@@) % أقطعتني مرتع الهزال وأق % % طعت أناسا مراتع السمن % % 3(@)(@@) % عرضت حمديك أن يقال له % % ضل ضلال 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1125# البكاء في الدمن % % 4(@)(@@) % ناشدتك الله يا أبا حسن % % في حرمة لم تذل ولم تهن % % 5(@)(@@) % لاينصرف عنك من يمت بها % % وحظه حظ عابد الوثن % % 6(@)(@@) % يشكوك لامظهرا شكايته % % إياك لكن شكاية الزمن % % 7(@)(@@) % ومن شكا دهره شكاك وهل % % تكنى عن الروح خارج البدن % % 8(@)(@@) % أنت الذي صرف الزمان به % % فأنت إن ذم وهو في قرن % % PageV01P4713 البحر : - 1(@)(@@) % ياهل يخلد منظر حسن % لممتع أو مخبر حسن % 2(@)(@@) % أم هل يطيب لمقلة وسن % فيقر فيها ذلك الوسن % % 3(@)(@@) % أم هل يبت لذاهب قرن % يوما فيوصل ذلك القرن % 4(@)(@@) % كم منة للدهر كدرها % % لم تصف منه ولا له المنن % % 5(@)(@@) % مازال يكسونا ويسلبنا % % حتى نظل وشكرنا إحن % % 6(@)(@@) % فحتى أراك بصرفه زينا % فهي الزخارف منه لاالزين % % 7(@)(@@) % يكفيك أن لاوجد مدخر % أبدا وألا دمع يختزن % % 8(@)(@@) % أبني إنك والعزاء معا % % بالأمس لف عليكما كفن % % 9(@)(@@) % فإذا تناولت العزاء أبى % % نيليه أن قد ضمه الجنن % % 10(@)(@@) % أبني إن أحزن عليك فلي % % في أن فقدتك ساعة حزن % % PageV01P4714 11(@)(@@) % وإن افتقدت الحزن مفتقدا % % لبي لفقدك للحري القمن % % 12(@)(@@) % بل لاإخال شجاك تعدمه % % روح ألم بها ولا بدن % % 13(@)(@@) % تالله لاتنفك لي شجنا % % يمضي الزمان وأنت لي شجن % % 14(@)(@@) % والآن حين ظعنت عن وطني % % سمج المقام وطاب لي الظعن % % 15(@)(@@) % ماأصبحت دنياي لي وطنا % % بل حيث دارك عندي الوطن % % 16(@)(@@) % ما في النهار وقد فقدتك من % أنس ولا في الليل لي سكن % % 17(@)(@@) % ياحسرتا فارقتني فننا % غضا ولم يثمر لي الفنن % % 18(@)(@@) % ولقد تسلي القلب ذكرته % % أني بأن ألقاك مرتهن % 19(@)(@@) % أولادنا أنتم لنا فتن % % وتفارقون فأنتم محن % % 20(@)(@@) % لهفي على سبق المنية بي % % لو بيع لم يوجد له ثمن % % PageV01P4715 21(@)(@@) % ياعاذلي في مثل نائبتي % % تلفى دموع العين تمتهن % % 22(@)(@@) % فدع الملام فإنني رجل % % عدل على العبرات مؤتمن % % 23(@)(@@) % أنفقت دمعي في مواضعه % % لاالوكس يلحقني ولاالغبن % % 24(@)(@@) % أبكاني ابني إذ فجعت به % % لم تبكني الأطلال والدمن % % 25(@)(@@) % وعكفت بالقبر المحيط به % % فاعذر فلا صنم ولا وثن % % PageV01P4716 البحر : - 1(@)(@@) % لازلت يخطئك الثناء لصاحب % أبدا ويخطئه لك الإحسان % 2(@)(@@) % لترى غداة الغب من حرمانه % % خطأ ومن حرمانه حرمان % % PageV01P4717 البحر : - 1(@)(@@) % لايبعد الله أسلافا لنا سبقوا % % ولو بقوا للقوا مالا يحبونا % % 2(@)(@@) % كيف 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1126# العزاء وما في العيش مغتبط % % ولااغتباط لأقوام يموتونا % % 3(@)(@@) % متى تعش قبلي الأحياء يدركنا % % وإن تمت قبلي الأموات يعفونا % % 4(@)(@@) % لابد من ميتة للمرء أو هرم % % يظل منه جليد القوم موهونا % % 5(@)(@@) % والبيض والجون لانهوى فراقهما % % ولانزال نذم البيض والجونا % % 6(@)(@@) % وكل لهو لهاه الناس مشغلة % عن ذكر ماهم من الأحداث لاقونا % % 7(@)(@@) % فإن لهوا فدفاع الهم حقهم % % وإن بكوا فذوو الأشجان باكونا % % 8(@)(@@) % ولايقين لأقوام وإن زعموا % % وما يقين أناس لا يعدونا % % 9(@)(@@) % لو أيقن الناس جدوا في أمورهم % % وكيف يوقن قوم لا يجدونا % % PageV01P4718 البحر : - 1(@)(@@) % قد كنت أستسقيك ظمآنا % % فاليوم استسقيك غصانا % % 2(@)(@@) % فبادر الغصان تستحيه % % إنك إن أغفلته حانا % % PageV01P4719 البحر : - 1(@)(@@) % قل للوزير أدام الله غبطته % % انظر إلى ابن فرات وابن عبدون % 2(@)(@@) % بل قد نظرت فلا تغبن أشفهما % % فليس ذو الرأي في حظ بمغبون % % 3(@)(@@) % أما ترى ابن فرات فيه بينة % من صارم ثقة بالغيب مأمون % 4(@)(@@) % هو القوي الأمين الكف نعلمه % % والرأي في كل معلوم ومظنون % % 5(@)(@@) % فيه ليان وحد يوجبان له % % ألا يخون ولا يغضي على هون % % 6(@)(@@) % كأنه السيف صلتا حين تعمله % % ماشئت من أملس المتنين مسنون % % PageV01P4720 البحر : - 1(@)(@@) % سمتني خطة من الكره نقدا % % بجزاء يكون أو لا يكون % 2(@)(@@) % سمتني أن أغيب عن كل شيء % % أنا ضب بقربه مفتون % % 3(@)(@@) % ووعدت التي وعدت من البر % ر وعندي بالخلف منك رهون % % 4(@)(@@) % فأتيت التي يرى الشر فيها % % رأي عين وخيرها مظنون % 5(@)(@@) % وتوقيت أن يقال غبين % ومن النكر حازم مغبون % % 6(@)(@@) % لاأحب التي لذيذ جناها % % متمنى وشوكها مضمون % % 7(@)(@@) % كاد الرشاء الذي أدلي إليك به % % من قبل بلكه بالماء يرويني % % 8(@)(@@) % أفدي أبا حسن بالنفس من رجل % إذا سألت سواه ظل يعطيني % % 9(@)(@@) % أدلي به فإذا لم يسقني أحد % % ممن أميح نداه حال يسقيني % % PageV01P4721 البحر : - 1(@)(@@) % يامن هواه من القلوب مكين % والماء في الوجنات منه معين % 2(@)(@@) % ومن اغتدى وكأنه من حسنه % % في كل عضو منه حور عين % % 3(@)(@@) % وإذا تنفس نائما أو لاثما % فكأنما يتنفس النسرين % % 4(@)(@@) % أعليك في رمي القلوب وكلمها % % نذر وفي منع الشفاء يمين % 5(@)(@@) % ظبي كأن كناسه مما ترى % % فيه دماء العاشقين عرين % 6(@)(@@) % إني أعوذ بعدلك ابن 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1127# محمد % منه وأنت على الظلوم معين % % 7(@)(@@) % يامن غدا والمشتري جد له % % والشمس رأي والهلال جبين % % 8(@)(@@) % والحلم سمت والعفاف طوية % والبر خدن والوفاء قرين % % 9(@)(@@) % ومن استفاض بعدله وبفضله % % حتى استوى الجبار والمسكين % % 10(@)(@@) % ومن استجن من الحوادث جاره % % فكأنه بعد الولاد جنين % % PageV01P4722 11(@)(@@) % مشتاه في كنفيك يابن محمد % % مشتى دفيء والمصيف كنين % % 12(@)(@@) % طاب الزمان له ورق غليظه % % فكأن كل شهوره تشرين % % 13(@)(@@) % أقسمت ما وعد الرجاء بحاصل % % إلا وجودك بالوفاء ضمين % % 14(@)(@@) % تبدو ووجهك ضاحك مستبشر % عند السؤال وللبخيل أنين % % 15(@)(@@) % عنوان معروف يكون وراءه % % بدء وعود من جداك ثخين % 16(@)(@@) % فالبشر بالبدء الهني مبشر % والبدء بالعود السني رهين % % 17(@)(@@) % لازلت أفضل من يطيع إلهه % % ويطيعه التعمير والتمكين % % 18(@)(@@) % أشكو إليك معاشرا ولعوا بنا % % لهم كمين في الصدور دفين % 19(@)(@@) % جدوا بنا كالمازحين عداوة % والجد في بعض المزاح مبين % % 20(@)(@@) % فإذا ادخرت لنا نصيب كرامة % خانوا وهان عليهم التخوين % % PageV01P4723 21(@)(@@) % غلبت على ألبابهم شهواتهم % % فأرتهم مالا يزين يزين % % 22(@)(@@) % من كل أفوه قد أمد بمعدة % حرى يذوب لحرها الهرصين % % 23(@)(@@) % والناب منه على الأمانة خنجر % % والظفر من أظفاره سكين % % 24(@)(@@) % بطل الوقاحة لا الحياء كأن به % % عن أن يخون أمانة تهوين % % 25(@)(@@) % يأبى مسالمة الأمانة مثله % % أنى يسالم بطة شاهين % % 26(@)(@@) % إنا نكاد ولانكيد عدونا % % ثقة بكيد الله وهو متين % % 27(@)(@@) % إني أعيذك أن يراك مليكنا % % ترضى خيانتهم وأنت أمين % % 28(@)(@@) % فكر وقل لهم مقالة صادق % يحتج عند مقاله ويبين % 29(@)(@@) % يامن يهون أن يخون أمانة % أقسمت أن سيهينك التهوين % % 30(@)(@@) % لايصغرن لديك قدر خطيئة % % إن المحاسب سجنه السجين % % PageV01P4724 31(@)(@@) % ولعل ذا جهل يقول بجهله % % إن المعاتب في الطفيف مهين % % 32(@)(@@) % وجوابه نقد لدينا حاضر % واف إذا نقص الجواب وزين % % 33(@)(@@) % قولا له إن كان يعقل إننا % % قوم بحب المنعمين ندين % % 34(@)(@@) % من لا يشح على قليل نصيبه % % من بر سيده فذاك ظنين % % 35(@)(@@) % إن المحب بمن أحب وبالذي % % يسدى إليه وإن أقل ضنين % % 36(@)(@@) % وأرى الكرامة حلية ماأخليت % % من غيرة فيها لها تحصين % % 37(@)(@@) % تلقى الفتى الغيران ينفث دونها % % قطع الحريق كأنه التنين % % 38(@)(@@) % والغيرة الشيء الذي لم يلغه % % إلا خصي السوء والعنين % % 39(@)(@@) % أو قلت قولا لست أجهل 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1128# أنه % % فيه لصدر مرجم تخشين % % 40(@)(@@) % ولما أصبت به سوى متعرض % وأخو العداء بما يدين مدين % % PageV01P4725 41(@)(@@) % فليرض بالتهجين أو فلينصرف % % عما يكون جزاءه التهجين % % 42(@)(@@) % لايحسن الظن اللئيم بنفسه % % فالغث غث والسمين سمين % % 43(@)(@@) % يا من عطاياه لديه رخيصة % % وثناء مادحه لديه ثمين % % 44(@)(@@) % وإذا اعتصمت بجوده فكأنما % % غدت العواصم لي وقنسرين % 45(@)(@@) % فإذا التقى داع له ومؤمل % سمع الدعاء وشفع التأمين % 46(@)(@@) % ستبرني وتسرني وتثيبني % % وأقول فيك ويحفظ التدوين % % PageV01P4726 البحر : - 1(@)(@@) % إنما يبكي شجي شجنه % لاكما يبكي خلي دمنه % 2(@)(@@) % أيها المأمون من نسيانه % % أكذا أنسى ولو غبت سنه % % 3(@)(@@) % لاتكون مولى هواه في الأذى % % لم يزل بالعبد حتى فتنه % % 4(@)(@@) % ثم خلاه وأهدى قلبه % % للتباريح وأنضى بدنه % % 5(@)(@@) % هل يعافي العبد من محذوره % أن أخلاقك أضحت جننه % % 6(@)(@@) % لم أكن قط أرى أني أرى % % سكنا مثلك ينسى سكنه % % 7(@)(@@) % أيها المهدي لقلبي ظننا % % لاتدع قلبي يناجي ظننه % % 8(@)(@@) % مع أن الغدر شيء لم أخل % ن أخلاقك مست درنه % % 9(@)(@@) % بل أرى العبد الذي استعبدته % % ثم سلطت عليه حزنه % 10(@)(@@) % هو عبد تشتهي تضميره % بالمجافاة وتقلي سمنه % PageV01P4727 11(@)(@@) % شعفا بالقد يامن قده % % أضحت الأغصان تحكي غصنه % % 12(@)(@@) % أبق منه لاتدعه خائفا % كلما هز نسيم فننه % % 13(@)(@@) % بل أرى أنك لي ممتحن % فارحم العبد وخفف محنه % % 14(@)(@@) % لن يطيق الهجر عبد نفسه % % بهوى سيده ممتحنه % 15(@)(@@) % هب لأسبوع رسولا واحدا % إن في ذاك لقلبي أمنه % % 16(@)(@@) % ويح هذا القلب ماأغفله % % أيها المولى وأحلى وسنه % % 17(@)(@@) % لو يراعي الرسل منكم عاشق % % نفسه عندكم مرتهنه % % 18(@)(@@) % وهوى منه هواه كونه % % وطنيا لم يفارق وطنه % % 19(@)(@@) % لايلمه لائم في فعله % % فله عذران عند الفطنه % % 20(@)(@@) % همه المسكين في عرفانه % % رأي مولى لم يبدل سننه % % PageV01P4728 21(@)(@@) % أوف مغبونك ياغابنه % % لايكن عذلك فيمن غبنه % % 22(@)(@@) % كيف لاتنزله منزلة % من خصوص الأنس تشجي زمنه % % 23(@)(@@) % هل توجدت على أخلاقه % % أم غدا رأيك فيمن لعنه % % 24(@)(@@) % هل تعتبت على أفهامه % أم هل استقصرت يوما لقنه % % 25(@)(@@) % هل ترى الغفلة شابت حلمه % % أم ترى النكراء شابت فطنه % % 26(@)(@@) % هل ترى العي يؤاخي صمته % % أم ترى الغي يؤاخي لسنه % % 27(@)(@@) % هل ترى الشك عليه غالبا % عند حق أم تراه يقنه % 28(@)(@@) % هل رأى 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1129# منك قبيحا بثه % % أم رأى منك جميلا دفنه % % 29(@)(@@) % هل لديه لك سر ذائع % % أم أمانات غدت محتجنه % % 30(@)(@@) % هل لديه تحفة مذخورة % % عنك أم منفوسة م ختزنة % % PageV01P4729 31(@)(@@) % لا يجر مولى جليل سننا % % في عبيد لم يفارق سكنه % 32(@)(@@) % إنه أخلق منه للهدى % % في معانيه لدى من وزنه % % 33(@)(@@) % أنت من تسمو ذراه أن ترى % % في ذراه خلة ممتهنة % % 34(@)(@@) % بيتك البيت الذي من زاره % % فابن عباسك فيمن قطنه % % 35(@)(@@) % من يكن أصبح من حجاجه % % فلقد أصبحت ممتن سدنه % 36(@)(@@) % أعذر الطرف الذي أجررته % % في المعاني والقوافي رسنه % % 37(@)(@@) % لاتلمه في عتاب مسرف % % أنت قويت عليه مننه % % 38(@)(@@) % أنت من يذكر ما قدمه % % من مواعيد وينسى إحنه % % 39(@)(@@) % أنت من نزه نجوى نفسه % % عن جوار الهفوة المضطغنه % % 40(@)(@@) % هل يداجين زلال قد صفا % % وأبى طيب ثناه أسنه % % PageV01P4730 41(@)(@@) % سيد فات المداجاة به % % سؤدد ينفي تقاه هجنه % % 42(@)(@@) % عرف الله إلى أن خافه % % ثم خاف الله حتى أمنه % % 43(@)(@@) % فحكى غائبه شاهده % % وحكى المكنون منه علنه % % 44(@)(@@) % ما رأى الله خنا أطلقه % % لا ولا غل ضمير سجنه % % 45(@)(@@) % يقبل الحمد ولا يوجبه % % وإن امتن فأسنى مننه % % 46(@)(@@) % لاكمن يغلط في أحكامه % % يهب العرف ويبغى ثمنه % % 47(@)(@@) % هكذا كل كريم ماجد % % جعل العرف صراحا ددنه % % 48(@)(@@) % ومتى راغ بشكر رائغ % ذات يوم لم تجده شجنه % 49(@)(@@) % عجبي من مادح يمنه % % وهو المعتق قدما يمنه % % 50(@)(@@) % نبأ فاسأل به ذا يزن % أو فسائل سيفه أو يزنه % % PageV01P4731 51(@)(@@) % يابني وهب حلى دهرهم % كلما عدد دهر زينه % 52(@)(@@) % يستميح العطف منك عاشق % لم تنيلوه وكنتم فتنه % % 53(@)(@@) % هل رآه الله أجرى ذمكم % % ببيان أو بلحن لحنه % % 54(@)(@@) % هل رآه الفحص قرنا لكم % % ببراز أو كمون كمنه % % 55(@)(@@) % هل تعييون بناء شاده % % طوله أو عرضه أو ثخنه % 56(@)(@@) % ليس بالمنكر إن لم تجعلوا % % مستقاه أن تكونوا شطنه % % 57(@)(@@) % قد سألت الناس ماأسألكم % % فأبت مسؤولهم تلك الهنه % 58(@)(@@) % وإذا قد سلموا المجد لكم % % فحمى الحالب دوني لبنه % % 59(@)(@@) % وغدا يمنع مني تافها % % لايرى شكر بني ثمنه % % 60(@)(@@) % والعلا وفق لأخلاقكم % % لا لأخلاقهم المؤتفنه % % PageV01P4732 61(@)(@@) % هل يعير الجود وغدا زينة % ويعير البخل حرا أبنه % 62(@)(@@) % كل ثفر فله شحنته % % هكذا كان 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1130# قضى من شحنه % % 63(@)(@@) % هل يعير البر بحرا عيسه % % أو يعير البحر برا سفنه % % 64(@)(@@) % قد بعثتم حرب عتب مقلق % % من ولي فاستعدوا هدنه % % 65(@)(@@) % والوزير الحق إن لم تنصفوا % % لتصكن شكاتي أذنه % % 66(@)(@@) % فلكم من ماء وجه ضانه % % ودم قد كان يجري حقنه % % 67(@)(@@) % أنتم قوم إذا استخدمكم % % مستعين الجاه كنتم مهنه % % 68(@)(@@) % وإذا رجم قوم فيكم % % بالندى والصفح كانوا كهنه % % 69(@)(@@) % فاخلفوا الغيث إذا أخلفنا % % ومتى صاب فباروا مزنه % % 70(@)(@@) % أنتم آفات أموالكم % % بالعطايا إذ سواكم خزنه % % PageV01P4733 71(@)(@@) % سادة في الحق قدما قادة % وعلى اللوماء فيه مرنه % % 72(@)(@@) % ونثا قوم دخانات الندى % % ولقد أضحى نثاكم دخنه % % 73(@)(@@) % جل كاسي طينكم صبغته % كيف صاغ الطين لما عجنه % % 74(@)(@@) % أوسع الأمرين فضلا فأتت % % صور الخلق تضاهي طينه % 75(@)(@@) % لايمنن عليكم مادح % بمديح فيه وعشي وضنه % % 76(@)(@@) % فله من فعلكم أمثلة % ينسج الشعر عليها يمنه % % 77(@)(@@) % لي مدن منكم مجتهد % وصل الله بخير قرنه % % 78(@)(@@) % ومسوء بدنوي منكم % % ألزم الله يديه ذقنه % % 79(@)(@@) % يتظنى دهنه في شعثي % % شعث الله ما دهنه % % 80(@)(@@) % قد أضاقت عطني نكراؤه % % ضيق الله عليه عطنه % PageV01P4734 81(@)(@@) % كم يعريني من أفضالكم % % ألبس الله عدوي كفنه % 82(@)(@@) % كم وكم بعدي من ظلكم % % ظلل الله عليه جننه % % 83(@)(@@) % أنا من ينساكم خدمته % % حين لاأجرته متزنه % % 84(@)(@@) % أنا من أسلف فيكم بعدما % % نسي الطابن فيكم طبنه % 85(@)(@@) % عكف الرأي عليكم وحدكم % % والهوى يعبد جهلا وثنه % % PageV01P4735 البحر : - 1(@)(@@) % يعطي الرغائب جودا من طبيعته % % لاكالمتاجر بالمعروف أحيانا % % 2(@)(@@) % لايستثيب ببذل العرف محمدة % ولاتراه بما أسداه منانا % % 3(@)(@@) % إذا اشترى الحمد أفناء الملوك رأى % % بين التجارة والإفضال فرقانا % % 4(@)(@@) % سألته الحاج حتى كدت أسأله % % رد الشباب جديدا كالذي كانا % % 5(@)(@@) % فما تجهم حاجاتي لكثرتها % % ولاتلون منه الوجه ألوانا % % PageV01P4736 البحر : - 1(@)(@@) % لم يزل للسكنجبين قرين % إن نأى عنه فهو صب خرين % 2(@)(@@) % ولدينا سكنجبين وحيد % أنت عندي بالأجر فيه قمين % % 3(@)(@@) % فاقرنن بالسكنجبين أخاه % إنه لافتقاده مستكين % % 4(@)(@@) % والذي تستميح غال ثمين % وثناء الأحرار غال ثمين % % 5(@)(@@) % ورجاء السماح في الناس ظن % ورجاء السماح فيك يقين % 6(@)(@@) % والذي يستقى من النار غور % والذي نستقيه منك معين % 7(@)(@@) % فاعذرنا على انتجاعك في الحا % % جات فالعذر عند ذاك مبين % % 8(@)(@@) % بدؤك الحر 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1131# حرض العود منا % % وسماح الفتى عليه معين % 9(@)(@@) % وكفانا تهيب العود في الحا % % جات أن السماح منك مكين % % 10(@)(@@) % أنت من لا يخاف منه اعتذار % عند عود ولا يخاف يمين % % PageV01P4737 11(@)(@@) % ولكم كمن الجواد من البخ % ل كمينا حاشاك ذاك الكمين % % 12(@)(@@) % فإذا مااستثير منه دفين ال % % بخل بالعود ثار ذاك الدفين % % 13(@)(@@) % ذاك جود له أوان وحين % ثم يمضي فينقضي فيبين % % 14(@)(@@) % وابتلى السائلون جودك فالده % % ر كله أوان وحين % % PageV01P4738 البحر : - 1(@)(@@) % عد عن دار وعن جار ظعن % % وادع للجلى كريم الممتحن % 2(@)(@@) % ياأبا عبد الإله المرتجى % % للمعالي ياحسين بن الحسن % 3(@)(@@) % وارث النجدة عن ذي نجدة % عبد الله بها دون الوثن % % 4(@)(@@) % عن أمير المؤمنين المرتضى % % لكتاب الله حقا والسنن % % 5(@)(@@) % مرتضى أوصى إليه مصطفى % وأمين لم يخالف مؤتمن % % 6(@)(@@) % لك من ميراثه نجدته % % وتقاه وهداه في المحن % 7(@)(@@) % نجدة يوجد فيما دونها % % منعة الجار وإدراك الإحن % % 8(@)(@@) % ليس لي دونك ود يقتنى % % لا ولا ودونك شكر يحتجن % % 9(@)(@@) % أنت من أصبحت في ذمته % لاأبالي بمعاداة الزمن % % 10(@)(@@) % أنت لي في الجانب الجدب حيا % أنت لي في الجانب القفر سكن % % PageV01P4739 11(@)(@@) % كل يوم لك عندي نائل % لي به عندك شكر مرتهن % % 12(@)(@@) % وقليل كل شكر حسن % % في الذي تسديه من فعل حسن % % 13(@)(@@) % لاتكاتم بالذي أوليتني % % إن ماأسررت منه قد علن % % 14(@)(@@) % لو وزنا بالذي أوليتنا % % شكر أهل الأرض طرا مااتزن % % 15(@)(@@) % لك عرف لم يحط شكري به % % جل ركنا حضن أن يحتضن % % 16(@)(@@) % كيف لا يسدي الذي أسديته % % حامل في المجد أثقال المؤن % % 17(@)(@@) % من أبوه لأخي الوحي أخ % وابن عم ووصي وختن % 18(@)(@@) % يابني عم النبي المصطفى % % حبكم ينفي عن المرء الظنن % % 19(@)(@@) % سلم المولد والدين معا % لمواليكم ولو خاض الفتن % % 20(@)(@@) % إن لله علينا مننا % حبكم شكر لهاتيك المنن % % PageV01P4740 21(@)(@@) % أنتم من لم يرد معطى الهدى % % غير ود الناس إياكم ثمن % % 22(@)(@@) % وحقيقون بذاكم أنتم % ياهداة الناس قدما للسنن % 23(@)(@@) % ياغيوث الناس في المحل إذا % % كلكل الأزمة أرسى وطحن % % 24(@)(@@) % إن سألناكم وسألنا بكم % % لم تكونوا مثل أطلال الدمن % % 25(@)(@@) % بل جلا الله بكم عنا العمى % % ونفى الله بكم عنا الحزن % % 26(@)(@@) % يوجد العلم لديكم والهدى % % أبد 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1132# الدهر جميعا في قرن % 27(@)(@@) % عندكم في كل هم فرج % معقب من كل تسهيد وسن % % 28(@)(@@) % جمح الحمد إليكم إذ جرى % % ثم وافاكم فأضحى قد حرن % 29(@)(@@) % رب فرد منكم في دهره % % قد كساه الله أنواع الزين % % 30(@)(@@) % شكس بالعرض سمح باللهى % % ضيق في دينه رحب العطن % % PageV01P4741 31(@)(@@) % ذي وقار في ذكاء وحجى % % في بهاء وحياء في لسن % % 32(@)(@@) % ثاقب الجمرة إن حركته % % وترى الحلم عليه إن سكن % % 33(@)(@@) % كالحسين المتناهي فضله % % وإن اغتاظ حسود واضطغن % % 34(@)(@@) % إن يوال الدهر أعداء لكم % % فهم فيه كمين قد كمن % % 35(@)(@@) % خلعوا فيكم عذار المعتدي % % وغدوا بين اعتراض وأرن % 36(@)(@@) % فاصبروا يهلكهم الله لكم % % مثل ماأهلك أذواء اليمن % % 37(@)(@@) % ذا رعين ثم أردى بعده % % ذا نواس ثم أردى ذا يزن % 38(@)(@@) % كم أرى الله بقوم عبرة % % عند إجرارهم فضل الرسن % 39(@)(@@) % قرب النصر فلا تستبطئوا % % قرب النصر يقينا غير ظن % % 40(@)(@@) % ومن التقصير صوني مهجتي % % فعل من أضحى إلى الدنيا ركن % PageV01P4742 41(@)(@@) % لا دمي يسفك في نصرتكم % % لا ولا عرضي فيكم يمتهن % % 42(@)(@@) % غير أني باذل نفسي وإن % % حقن الله دمي فيما حقن % % 43(@)(@@) % ليت أني غرض من دونكم % % ذاك أو درع يقيكم أو مجن % % 44(@)(@@) % أتلقى بجبيني من رمى % % وبنحري وبصدري من طعن % % 45(@)(@@) % إن مبتاع الرضا من ربه % فيكم بالنفس لا يخشى الغبن % 46(@)(@@) % قلت للناهي عن حبكم % % إن حبي لهم أوفى الجنن % % 47(@)(@@) % فانصرف عني حسيرأ خاسئا % شجني فيهم وللناس شجن % % 48(@)(@@) % واله عن عذلك سمعا قد مرن % ودع العدل فسمعي قد مرن % % 49(@)(@@) % شهد الله وميل خالص % % صدق الظاهر منه مابطن % % 50(@)(@@) % بموالاة لكم صادقة % سلكت مسلك روح في بدن % % PageV01P4743 51(@)(@@) % فهي لي مادمت حيا ملبس % ومتى ما مت كانت لي كفن % % 52(@)(@@) % وأرى فقري وحبيكم غنى % وهزالي مع وديكم سمن % 53(@)(@@) % فطن تبصر أسرار العلا % % حين لاتنفذ أبصار الفطن % 54(@)(@@) % برني معروفكم قبل أبي % % وغذاني بركم قبل اللبن % % 55(@)(@@) % ومتى اختل ابن روميكم % % فأياديكم حرى منه قمن % 56(@)(@@) % وإذا أنتم وأنتم أنتم % % لم تولوني ونولوني فمن % 57(@)(@@) % أنا عبد الحق لاعبد الهوى % % لعن الله الهوى فيما لعن % % 58(@)(@@) % أنا من أبناء أتباع الهدى % % لست من أبناء أتباع البطن % 59(@)(@@) % ديني الحجة 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1133# لاعاداتهم % واختيار الدار لاإلف الوطن % % 60(@)(@@) % والذي قد أوجب الله لكم % % فوق ماأوجبت مااخضر فنن % PageV01P4744 البحر : - 1(@)(@@) % ياواحد الناس في الآلاء والمنن % والمستجار به من حادث الزمن % % 2(@)(@@) % وابن الذين بنوا أساس دولتهم % % على النبوة والقرآن والسنن % % 3(@)(@@) % فمتى هجاك فدارشه لقرونه % % ليكون مما قد خشيت أمانا % % 3(@)(@@) % يا خائف الطوفان إن لنا أخا % يعلو قصير قرونه الطوفانا % % 3(@)(@@) % دع ذا فإن قرونه لو أصبحت % % لك معقلا لم ترهب الحدثانا % % 3(@)(@@) % نكت العجوز فظل يشتم سادرا % وقرنه يصرعنه ألوانا % % 3(@)(@@) % أقرضته أيرا فرد لسانا % وكذاك يفعل من غدا قرنانا % % 3(@)(@@) % أشد مابي من شكو ومن ألم كاملأقرضته أيرا فرد لسانا وكذاك يفعل من غدا قرنانا نكت العجوز فظل يشتم سادرا وقرنه يصرعنه ألوانا لله در النغل من متوهم أن اللسان قاوم الجرذانا دع ذا فإن قرونه لو أصبحتلك معقلا لم ترهب الحدثانا يا خائف الطوف % % فقدي جنى مقلتي من وجهك الحسن % % PageV01P4745 البحر : - 1(@)(@@) % قرأت في وجهك عنوانا % آذنني بالغدر إيذانا % % 2(@)(@@) % تالله أنسى ماذكرت الصبى % % بل ماذكرت الله لهفانا % % 3(@)(@@) % يوم التقينا فتجهمتني % % تجهم المديون ديانا % % 4(@)(@@) % وكيف أنسى ذاك مستيقظا % ولست أنسى ذاك وسنانا % % 5(@)(@@) % طلعت من بعد فأوهمتني % % أنك قد عاينت شيطانا % % 6(@)(@@) % لاقيتني ساعة لاقيتني % % أثقل خلق الله أجفانا % % 7(@)(@@) % كأنما كنت تضمنت لي % % رد شبابي كالذي كانا % % 8(@)(@@) % أو طم بحر الصين في طرفة % أو كسح أروند وثهلانا % % 9(@)(@@) % أو كل مالم يستطع فعله % % عيسى ولاموسى بن عمرانا % % 10(@)(@@) % ياحسن الوجه لقد شنته % فاضمم إلى حسنك إحسانا % % PageV01P4746 11(@)(@@) % أنت ملول حائل عهده % % تصبغك الساعات ألوانا % % 12(@)(@@) % تصرم ذا الوصل وتضحي إلى % % من يجتوي وصلك ظمآنا % % 13(@)(@@) % حتى إذا واصل صارمته % % أو سمته صدا وهجرانا % % 14(@)(@@) % وتستلين الدهر ذا خشنة % فظا وتستخشن من لانا % % 15(@)(@@) % وتعقد الوعد فإنجازه % % خلف إذا إنجازه آنا % % 16(@)(@@) % حتى إذا أنجزته مرة % % مننته سرا وإعلانا % % 17(@)(@@) % وماأحب الواعدي مخلفا % كلا ولا الممتن منانا % % 18(@)(@@) % حذرتني الناس فقد أصبحت % نفسي لاتألف إنسانا % % 19(@)(@@) % أهنتني جدا فأعززتني % % رب امرىء عز بأن هانا % % PageV01P4747 البحر : - 1(@)(@@) % ياهل تعود سوالف الأزمان % أم لافمنصرف إلى السلوان % % 2(@)(@@) % ولئن عدلت عن الغواية همتي % % وغدوت معترفا لمن يلحاني % % 3(@)(@@) % لبما أروح 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1134# وللشبيبة حبرة % أرني العيون بفاحم فتان % % 4(@)(@@) % وبمشرق صافي الأديم كأنما % % فيه ائتلاق من صفيح يمان % % 5(@)(@@) % وبما أمد يدي إلى ثمر الصبي % % فأنوش منها فوت كف الجاني % % 6(@)(@@) % بعض الأسى إن الأسى لك جمة % كل سيدرك جريه العصران % % 7(@)(@@) % أضحى محمد المحمد كاسمه % % في الصالحات مشار كل بنان % 8(@)(@@) % في أيها جارى تقدم شأوه % % فحوى الرهان أمام كل عنان % % 9(@)(@@) % علم السراة حيا العفاة ندى الثرى % % وتقى العرا في نائب الحدثان % % 10(@)(@@) % تعشو الرجال إلى نواجم رأيه % % والخطب أعجم داثر البرهان % % PageV01P4748 11(@)(@@) % وتؤم مقحمة السنين فناءه % % فتنيخ منه بواسع الأعطان % 12(@)(@@) % يغلو بأغلاق المحامد سومها % % ويرى الرغائب أوكس الأيمان % % 13(@)(@@) % لم يخل يوما من نجي تقية % تدعو إلى المعروف والإحسان % % 14(@)(@@) % لاتفرط الجدوى أنامل كفه % حتى يهش إلى فعال ثاني % % 15(@)(@@) % يبغي بذلك قربة أو صيتة % وأثير همته رضا الرحمن % % 16(@)(@@) % وإذا بدا ملأ العيون جلالة % فتظل وهي كليلة اللحظان % % 17(@)(@@) % وإذا هفا أهل الحلوم رسا به % % حلم يشول بيذبل وأبان % % 18(@)(@@) % عذبت ممادحه بأفواه الورى % % فثناؤه يثني بكل مكان % % 19(@)(@@) % وله من العباس مجد ولا ية % % عن كل أزهر من بنيه هجان % 20(@)(@@) % ياوارث الصباح ربوة مجده % % أصبحت نعم مؤثل البنيان % % PageV01P4749 21(@)(@@) % كم فعلة لك في الأنام سنية % ولدى الإله ثقيلة الميزان % % 22(@)(@@) % إني لشاكرك الذي أوليتني % % ساع لذلك غير سعي الواني % % 23(@)(@@) % عجزت يداي عن الجزاء فألقتا % % عبء الشكور على ثناء لساني % % 24(@)(@@) % ولأسمكن خلال كل قبيلة % % نشرا لذكرك طيب النسمان % 25(@)(@@) % كجليب ريا الروض بات يشيعه % % نفح الصبا في ليلة مدجان % % 26(@)(@@) % بمنخلات من عقائل منطقي % % سلس مساربهن في الآذان % 27(@)(@@) % لازال جدك يامحمد صاعدا % وهوت جدود عداك للأذقان % % PageV01P4750 البحر : - 1(@)(@@) % ليس الكريم الذي يعطي عطيته % على الثناء وإن أغلى به الثمنا % % 2(@)(@@) % بل الكريم الذي يعطي عطيته % % لغير شيء سوى استحسانه الحسنا % % 3(@)(@@) % لايستثيب ببذل العرف محمدة % ولايمن إذا ماقلد المننا % % 4(@)(@@) % حتى لتحسب أن الله أجبره % على السماح ولم يخلقه ممتحنا % % PageV01P4751 البحر : - 1(@)(@@) % رأيت كل شراب لامساغ له % % غير المدامة إلا عند ظمآن % % 2(@)(@@) % كأس يسوغها الريان لذتها % % إذا تأبى سواها كل ريان % 3(@)(@@) % يمل كل شراب من يعاقره % وشارب الراح مشعوف بها عاني % % 4(@)(@@) % كريقة 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1135# المرء لاتنفك من فمه % % ومايمل لها طعما لإبان % % PageV01P4752 البحر : - 1(@)(@@) % فضل الراح أنها لذة المش % % رب عند الظمآن والريان % 2(@)(@@) % وجميع الشراب مما سواها % % غير لذ إلا لدى الظمآن % PageV01P4753 البحر : - 1(@)(@@) % كسته القنا حلة من دم % % فأضحت لدى الله من أرجوان % 2(@)(@@) % حذته معانقة الذراعي % % ن معانقة القاصرات الحسان % % PageV01P4754 البحر : - 1(@)(@@) % جربت شعري أبلو كيف طاعته % وقلت هل يتأتى في سليمان % 2(@)(@@) % فجاءني فيه طوعا لا ينازعني % % ولم أخله يواتي فيه بيتان % % 3(@)(@@) % فقلت أما وهذا ابن طاعته % % فسوف أجزيه إحسانا بإحسان % % 4(@)(@@) % وماأراني سجيس الدهر جازيه % بمثل مدحي به يحيى بن خاقان % % PageV01P4755 البحر : - 1(@)(@@) % لاترى نرجسا يشبه بالور % % د إذا ماأردت فكرا وعينا % % 2(@)(@@) % ومن الورد مايشبه بالنر % جس علما بأن في ذاك رينا % % PageV01P4756 البحر : - 1(@)(@@) % طلب البيهقي قرنا فلم يح % رمه لكنه أصيب بأذنه % 2(@)(@@) % لاكمن لم ينله واصطلمت أذ % % ناه لما ابتغاه ياطول حزنه % % 3(@)(@@) % ويك يابين أي قرن عليه % % ليت للبيهقي عقلا بوزنه % 4(@)(@@) % قرنه مثل بظر أمك في الطو % % ل ولكنه غليظ كذهنه % % 5(@)(@@) % لو مكان الهجاء سدده نح % وي توليت هاربا خوف طعنه % % 6(@)(@@) % لكن الوغد جاهل ليس يدري % % أين منه تكون شدة ركنه % 7(@)(@@) % لكن القلطبان أحمق فدم % جاهل أين منه شدة ركنه % % 8(@)(@@) % ليس يدري من الغباوة أين ال % % بأس منه وأين موضع وهنه % % 9(@)(@@) % بل أراه أراد إترار روحي % % بأهاجيه لي ضلالا لأفنه % % 10(@)(@@) % أترى الثور مادرى أن قلبي % % بين جنبي نيران ذهنه % % PageV01P4757 11(@)(@@) % بل أبى علمه بذاك عماه % ماله سد ثقبتي جدة ابنه % 12(@)(@@) % لست أخشى إذا بدا حر شعري % % ملبسي دون برده درع أمنه % % 13(@)(@@) % لعنة الله كل يوم عليه % % فهو أولى من المجوس بلعنه % % 14(@)(@@) % لعنة منه في الإقامة تغشا % % ه وأخرى تزوره يوم ظعنه % % 15(@)(@@) % رجل يدعي الصرامة والفت % % ك وحولاؤه تناك بإذنه % 16(@)(@@) % مثل مايدعي من العلم بالنح % و على جهله وكثرة لحنه % 17(@)(@@) % ساقط يخبن الغلاصم والأع % % ين في ردنه لمنبت قرنه % % 18(@)(@@) % أنا آكلته فما بصرت عي % % ني بشيء كأكله وكخبنه % % 19(@)(@@) % قلت من أنت أيها الشره النذ % % ل شهودي عليه آثار ردنه % % 20(@)(@@) % قال عبد الأمير . قلت هوانا % لك كل الهوان بل عبد 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1136# بطنه % % PageV01P4758 21(@)(@@) % إنما البيهقي ميت مجيف % وهل الميت مالك قطع نتنه % % 22(@)(@@) % وبعين الأمير أشياء كانت % % منه بالأمس موجبات لشجنه % % 23(@)(@@) % فليعده إلى المطابق مذمو % % ما فما للمجيف شيء كدفنه % % 24(@)(@@) % أنا كالبيهقي إن لم أكن من % ه مكان القذاة من بطن جفنه % 25(@)(@@) % قد طحناه واعتصرناه يابي % % ن فكل كسبه وأسرج بدهنه % % PageV01P4759 البحر : - 1(@)(@@) % أرض عمران تزرع العصيانا % % كل حول فتخرج الحملانا % % 2(@)(@@) % ومؤونات بذرها لا على القر % نان لكن تحمل الإخوانا % % PageV01P4760 البحر : - 1(@)(@@) % أنظروني بني ثوابة حتى % % أضع الذم والأمانة عني % % 2(@)(@@) % ثم أنجو بثقلكم بعد ذاكم % واتقوا الله وارحموا ذاك مني % % PageV01P4761 البحر : - 1(@)(@@) % هذا كتاب من أخ شاكر % نعماك يرجوك لريب الزمان % 2(@)(@@) % أصفاك شكر القلب عن نية % وبعد شكر القلب شكر اللسان % % 3(@)(@@) % ولست أشكوك ولكنما % % يشكوك مني موضع الطيلسان % % 4(@)(@@) % فأنجز الوعد بثوب له % % من الجياد المرتضاة الحسان % % 5(@)(@@) % وفي القوافي ثمن مريح % % فلا تقصر ذرعه عن ثمان % % 6(@)(@@) % ولا تكدره بتأخره % % حاشاك من مطل الجواد الجبان % % PageV01P4762 البحر : - 1(@)(@@) % بني وهب الله جار لكم % % من النائبات وأزمانها % % 2(@)(@@) % يغيظ العدا أنكم عصبة % تبين رجحان ميزانها % % 3(@)(@@) % جعلتم وأبناؤكم دوحة % مقيل الورى تحت أفنانها % % 4(@)(@@) % فكان القوام بأعرافها % % وكان التمام بأغصانها % % 5(@)(@@) % ولن يذهب الدهر حتى ترى % % سليمانها كسليمانها % % 6(@)(@@) % أقول لمستخبر عنكم % % ودعواي رهن ببرهانها % % 7(@)(@@) % أولئك عدة أملاكنا % % قديما وزينة مزدانها % % 8(@)(@@) % فهم في العناء كأسيافها % % وهم في البهاء كتيجانها % % 9(@)(@@) % ولم أوفهم حق تمثيلهم % % ضلالا لنفسي ونسيانها % % 10(@)(@@) % وليسوا كعين وإنسانها % % وماقدر عين وإنسانها % % PageV01P4763 11(@)(@@) % سأعلي مراتب أمثالها % % بما رفع الله من شانها % % 12(@)(@@) % هم للملوك كأرواحها % % إذا الناس كانوا كأبدانها % % 13(@)(@@) % فتلك الخلافة تعتدهم % % يد الدهر أركان بنيانها % % 14(@)(@@) % وما عند أربعة منهم % أبى الله عدة أركانها % % 15(@)(@@) % ولكن لها منهم عدة % كقطر السماء وسكانها % % 16(@)(@@) % وأقلامهم عند أملاكنا % % أسنة أرماح فرسانها % % 17(@)(@@) % وحنت إليكم وزاراتهم % فحنت إلى خير أوطانها % % 18(@)(@@) % إن في واسط العراق رجالا % % كلهم شاهد عليك أمين % 18(@)(@@) % لئن ضمنوا صون ساداتناخفيفدخلتنا الشكوك يا بن أبي شيخ بأي الأديان أنت تدين وإلى أيها تميل أبا جعفر كم ذا الهوي وذا التلوين إن في واسط العراق رجالاكلهم شاهد عليك أمين % لما صان عينا كأجفانها 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1137# % % 18(@)(@@) % دخلتنا الشكوك يا بن أبي شي % خ بأي الأديان أنت تدين % PageV01P4764 18(@)(@@) % وإلى أيها تميل أبا جع % فر كم ذا الهوي وذا التلوين % PageV01P4765 البحر : - 1(@)(@@) % يا بن حسان لاتشكن في دي % % ني ولا تقتسمك في الظنون % % 2(@)(@@) % فهو توحيد ذي الجلال وتص % ديق الذي بلغ الرسول الأمين % 3(@)(@@) % ملة رشدة أراني هداها % % بصر ثاقب وعقل متين % % 4(@)(@@) % فلها معقد بجيدي وثيق % % وقرار من ذات نفسي مكين % % 5(@)(@@) % لست بالمستعيض منها ولا الرا % % غب عنها إني بها لضنين % % 6(@)(@@) % إنما يستمال عن سمت رشد % من تولاه رأيك المأفون % % 7(@)(@@) % فاغد عني وانظر لنفسك دوني % % ليس يجزى سواي عما أدين % % 8(@)(@@) % وليزعك المشيب عن بعض ما تف % عل أو وجهك المشوه المشين % 9(@)(@@) % كم يكون العتو في الأرض يا شقر % % راق لا ترعوي ولا تستكين % % 10(@)(@@) % في نكاح مثل السفاح خلا أن % ن ذاك شبهة وذاك مبين % % PageV01P4766 البحر : - 1(@)(@@) % أنهنه غربي عن الجاهلي % % ن حلما وإني لعضب اللسان % 2(@)(@@) % فإن غمطوا الحلم أتبعته % % مغبة إطراقة الأفعوان % % PageV01P4767 البحر : - 1(@)(@@) % خساسة البيهقي والبين % % لم تر في واحد ولا اثنين % 2(@)(@@) % في لؤم كلبين إن كشفتهما % % كشف امتحان وقبح قردين % % 3(@)(@@) % وجهل عيرين إن سألتهما % % عن باب علم وحمق تيسين % % 4(@)(@@) % إن وعدا أخلفاك ما وعدا % % أو حدثا حدثاك بالمين % % 5(@)(@@) % أو حملا من أمانة طرفا % % كانا الظنينين لا الأمينين % % 6(@)(@@) % هذا يبيع القريض من شره % ووالديه معا بفلسين % % 7(@)(@@) % باع كلام الأمير مرتغبا % % عنه بقوارتي رغيفين % % 8(@)(@@) % وفضلة من عصيدة خمخت % وبائع الزين مشتري الشين % % 9(@)(@@) % يا لك من بائع بلا ورق % % ينشده ناقد ولا عين % % 10(@)(@@) % والبين في المخزيات يشركه % % لابارك الله في الشريكين % % PageV01P4768 11(@)(@@) % أسد إلى البين كل عارفة % يجزك من شي بضعفين % % 12(@)(@@) % فيه وفي الباهلي معتبر % إياه أسدي إليه عرفين % % 13(@)(@@) % وسطه مجلس الأمير وأح % % ياه وقد مات ميتة الدين % % 14(@)(@@) % فكان ما كان من مثوبته % % أورده الله مورد الحين % % 15(@)(@@) % ثم الدمشقي بعد صاحبه % % فليعتبر ناظر بعينين % % 16(@)(@@) % إن قريضا يكون حامله % في الناس كالبيهقي والبين % % 17(@)(@@) % لم يحسنا قط صنعه وإذا % % ما أنشداه حلوين % % 18(@)(@@) % عندي كالسيف في يدي رجل % لا بطل محرب ولا قين % % 19(@)(@@) % فليس بالمحسن القتال ولا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1138# % % صانع صدق صناع كفين % % 20(@)(@@) % من شر أصلين إن نسبتهما % % لاشك فيه وشر فرعين % % PageV01P4769 البحر : - 1(@)(@@) % يابن التي لم تزل تجاري % % في الغي شيطانها اللعينا % % 2(@)(@@) % تزني وتزني ولا تبالي % % ولا تدين الإله دينا % % 3(@)(@@) % حتى إذا يومها أتاها % % أوصت بنيها خزوا بنينا % % 4(@)(@@) % بأن إذا مت فاجعلوني % % ذريرة للمخنثينا % % PageV01P4770 البحر : - 1(@)(@@) % ما راح مغبونا بصفقة خاسر % % ممن باع متعة فائت بأمان % 2(@)(@@) % أمن امرء من رزء شي فاته % % والمدركوه مراقبو الحدثان % % 3(@)(@@) % وكفى عزاء لأمرىء عن فائت % أن لا يخاف عليه صرف زمان % % PageV01P4771 البحر : - 1(@)(@@) % أعرف وراقا بآيينه % من قرنه نصب سكاكينه % 2(@)(@@) % يكنى أبا حفص له زوجة % جار استها أيسر ما عونه % % 3(@)(@@) % لايمنع المسكين من نيكها % % ياليتني بعض مساكينه % % 4(@)(@@) % جود دياني له فضلة % يأمن خسران موازينه % % 5(@)(@@) % انظر إذا شئت إلى قرنه % % وانظر إلى قائم سكينه % % 6(@)(@@) % تجدهما من جوهر واحد % كجوده المشتق من دينه % % 7(@)(@@) % وقائل لست بذي فهة % ولا ضعيف الرأي مأفونه % % 8(@)(@@) % فلم أذلت الشعر في مثله % % فقلت والعذر بتبيينه % % 9(@)(@@) % قد جن جل الناس في دهرنا % % فعدني بعض مجانينه % % 10(@)(@@) % إن أك قد أكسبته سمعة % وزانه شعري بتزيينه % % PageV01P4772 11(@)(@@) % لطالما ملكني رأسه % % تسبح كفي في ميادينه % % 12(@)(@@) % شيخ لنا في مستوى رأسه % بستان صدق من بساتينه % % 13(@)(@@) % إذا البساتين انقضى حملها % % أطعم في كل أحايينه % 14(@)(@@) % فخرا أبا حفص بما نلته % % من زين شعري تحاسينه % % 15(@)(@@) % قد يعظم الشيء بتعظيمه % % وربما هان بتهوينه % % 16(@)(@@) % أصبح شعري بعد ضني به % % يرفل في ألوان موضونه % % 17(@)(@@) % عمن يصان الشعر من بعدما % % صار لك اسم في دواوينه % % PageV01P4773 البحر : - 1(@)(@@) % لاتعذلوا عرس أبي غانم % % في دسها القثاء في التينه % 2(@)(@@) % فيشهد الله لقد أصبحت % إلى أيور الخلق مسكينه % % 3(@)(@@) % لأن جرذان أبي غانم % % في اللوح مشكول بتسكينه % % 4(@)(@@) % أعيا عليها بعدما حاولت % % تحريكه بالعطر والزينه % % 5(@)(@@) % إن كان عنينا به آفة % فإنها ليست بعنينه % % 6(@)(@@) % بل شهوة الجرذان من سوسها % % مركب ذلك في الطينه % % PageV01P4774 البحر : - 1(@)(@@) % لما رأى أمه نهبي مقسمة % يجري الهجاء بها في كل ميدان % % 2(@)(@@) % أحرجته فهجاني غير منتصر % لاسابق من مجاراتي ولاثان % % 3(@)(@@) % أظهرت في شعره من ضعف منته % % خزيا أعض له من هتك بوران % % PageV01P4775 البحر 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1139# : - 1(@)(@@) % لما رأى أمه نهبى مقسمة % يرمي بها الشعر بلدانا فبلدانا % % 2(@)(@@) % أغضبته فهجاني غير منصر % كعارك أنفه بالأرض غضبانا % % 3(@)(@@) % لله نسوة خالد لقد اعتلت % كل القحاب خلاعة ومجونا % % 3(@)(@@) % مجن ينبهن الغواة على الزنا % % ويصحن ليلا يا نيام التينا % % 3(@)(@@) % زفرات أكيار ووقع مطارق % فكأن بيتك كور حدادينا % % 3(@)(@@) % قرع الأيور فروجهن تشوبه % % أنفاسهن زوافرا وأنينا % % 3(@)(@@) % لو جئتهن إذا خلون لية % لسمعت أجراسا هناك فنونا % % 3(@)(@@) % ما إن يزال لهن ردف شائل % أو ركبتان يقارعان جبينا % % 3(@)(@@) % أظهرت في شعره من ضعف منتهكاملما إن يزال لهن ردف شائل أو ركبتان يقارعان جبينا لو جئتهن إذا خلون لية لسمعت أجراسا هناك فنونا قرع الأيور فروجهن تشوبهأنفاسهن زوافرا وأنينا زفرات أكيار ووقع مطارق فكأن بيتك كور حدادينا مجن ينبهن % % خزيا أعض له من خزي بورانا % % PageV01P4776 البحر : - 1(@)(@@) % قد كنت أبكي لأصحاب الهوى زمنا % % فهل لي الآن من باك فيبكيني % % 2(@)(@@) % أهكذا يجد العشاق كلهم % يارحمتي للمحبين المساكين % PageV01P4777 البحر : - 1(@)(@@) % أبو سليمان لاترضى طريقته % لافي غناء ولاتعليم صبيان % 2(@)(@@) % شيخ إذا علم الصبيان أفزعهم % % كأنه أم صبيان وغيلان % % 3(@)(@@) % وإن تغنى فسلح جاء منبثقا % % في لون خلقته من سلح سكران % % 4(@)(@@) % له إذا جاوب الطنبور محتفلا % % صوت بمصر وضرب في خراسان % 5(@)(@@) % عواء كلب على أوتار مندفة % في قبح قرد وفي استكبار هامان % 6(@)(@@) % وتحسب العين فكيه إذا اختلفا % % عند التنغم فكي بغل طحان % % 7(@)(@@) % لاحظ لهازمه واضحك مسارقة % فإنه عبرة ما إن لها ثاني % % 8(@)(@@) % وأقذر الناس أسنانا وأطفسهم % % وأشبه الناس أخلاقا بإنسان % % 9(@)(@@) % عربيدة صلف بالنقل منصرف % في كمه أبدا آثار رمان % % 10(@)(@@) % واللوز لافارقته لوزتا ورم % فشرطه منه عند الشرب ريعان % % PageV01P4778 11(@)(@@) % نقل ونفل إلى نبت له وضر % % كأنه منه في حانوت سمان % % 12(@)(@@) % وإن سألنا ابنه ماذا أتاك به % % أبوك قال لنا إكرار حرمان % % 13(@)(@@) % هيهات هيهات مامن طامع أبدا % % في زاد زهمان إلا بطن زهمان % 14(@)(@@) % وأضرب الناس في قوم بجائحة % % شؤما وأكثر من عمرو بن دهمان % % 15(@)(@@) % وإن رأى حية تهتز في ركب % هوى لها بعصا موسى بن عمران % % 16(@)(@@) % لا بل بكوة وثاب بكوته % % بلاعة كل تنين وثعبان % % 17(@)(@@) % أبصرته ساجدا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1140# . . . مبتهلا % فقلت أعظمت كفرا بعد إيمان % 18(@)(@@) % فقال قد سجدت قبلي ملائكة % لمن سوى الله دعوى ذات برهان % 19(@)(@@) % فقلت ذاك أجل الخلق كلهم % أبوك آدم هل هذان سيان % % 20(@)(@@) % فقال آدم إنسان وإن عظمت % % زلفاه والأير أيضا بعض إنسان % % PageV01P4779 21(@)(@@) % نهى الكتاب عن الأوثان نعبدها % % وما الأيور إذا قامت بأوثان % % 22(@)(@@) % ماجاء في الأير نهي عن عبادته % لافي زبور ولاتنزيل فرقان % % 23(@)(@@) % فامنح ملامك من صلى إلى وثن % وامنع ملامك من صلى لجرذان % % 24(@)(@@) % يالهف نفسي ولهف الناس كلهم % على سليمان مخزي كل شيطان % % 25(@)(@@) % لو كان حيا لهاب الجن سطوته % % وماتعاتوا عليه بعد إذعان % % 26(@)(@@) % أبو سليمان شيطان وكنيته % % أبو سليمان أمنا من سليمان % % 27(@)(@@) % خبرته أن رأس الأير فيشلة % فقال كلا ولكن رأس خاقان % % 28(@)(@@) % إن يشقني الله بعد المحسنين به % % فكم شقيت بحسن بعد بستان % % PageV01P4780 البحر : - 1(@)(@@) % من يكن يكرم اللئام فقد أض % % حوا وأمسوا عندي بدار هوان % % 2(@)(@@) % هي دنيا طفوا عليها وإن قا % % لواعلونا بالظن والحسبان % 3(@)(@@) % ماعلا من طفا كما طفت الجي % % فة في لجة من الطوفان % % 4(@)(@@) % أو كما شال ناقص الوزن في المي % % زان وانحط عنه ذو رجحان % % 5(@)(@@) % فاله عنها تهن عليك يقينا % % بأبي أنت يافتى الفتيان % % 6(@)(@@) % ودعن من تقوده بمناها % % كاسف البال دائم الأحزان % % 7(@)(@@) % لو صفا عيشها فاسعد حيا % % لكمال وحكمة وبيان % % 8(@)(@@) % كنت من بؤسها ستحيا سليما % % عالي القدر أيد الأركان % % PageV01P4781 البحر : - 1(@)(@@) % رأيتك تكره وقع الظبا % % وتصبوا إلى كل شيء حسن % 2(@)(@@) % فإن لم يكن لك صبر علي % ي فلا تغلبن على الصبر عن % PageV01P4782 البحر : - 1(@)(@@) % تعالى جد ديناري بنان % % فحلا حيث حل الفرقدان % 2(@)(@@) % فلو أن النفوس بحيث حلا % غدون من الحوادث في أمان % % PageV01P4783 البحر : - 1(@)(@@) % رب أطلق يدي في كل شيخ % % ذي رياء بسمته فسكونه % 2(@)(@@) % ذي عيال زبونهن من النا % % كة بعد الهدو مثل زبونه % % 2(@)(@@) % تاجر فاجر جموح منوع ذي عيال زبونهن من الناكة بعد الهدو مثل زبونه % % يرهق الناس في اقتضاء ديونه % % 3(@)(@@) % جمع المال بالعدالة في الظ % ظاهر والموبقات من مكنونه % % 4(@)(@@) % في قلنساته من القطن ما يم % % لأ عدلا يخال من عثنونه % % 5(@)(@@) % ذات جنبين وافرين عظي 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1141# % % مين وسمك أطاله لقرونه % % 6(@)(@@) % يخزن الإرث دائبا لمجيد % فض أبكاره وإفضاء عونه % % PageV01P4784 البحر : - 1(@)(@@) % ألا يا بن المرازبة الهجانلقد اشبهتهم وورثت عنهمجميل الصبر للسمر اللدانرماح في اللقاء مضمنات بلا زوج هناك ولا سنان كما اشبهت خيلهم لتلقى شبيه القوم في كل المعاني فما تنفك تركب كل يومذلول الظهر خوار العنان صبور للرماح إ % % ويابن الصابرين لدى الطعان % PageV01P4785 البحر : - 1(@)(@@) % لقد اشبهتهم وورثت عنهم % جميل الصبر للسمر اللدان % PageV01P4786 البحر : - 1(@)(@@) % رماح في اللقاء مضمنات % بلا زوج هناك ولا سنان % PageV01P4787 البحر : - 1(@)(@@) % كما اشبهت خيلهم لتلقى % % شبيه القوم في كل المعاني % % PageV01P4788 البحر : - 1(@)(@@) % فما تنفك تركب كل يوم % % ذلول الظهر خوار العنان % % PageV01P4789 البحر : - 1(@)(@@) % صبور للرماح إذا أتته % لتطعن منه في جوف العجان % % PageV01P4790 البحر : - 1(@)(@@) % ألا يا قوم ويحكم أصيخوا % % لوصف سلامة الفرد المثاني % % PageV01P4791 البحر : - 1(@)(@@) % يقول ليونس لما علاه % وخاض بعرده قعر العجان % % PageV01P4792 البحر : - 1(@)(@@) % علام ألام في حبيك يا من % % شفيت بمائه لما سقاني % % 2(@)(@@) % وغنى إذا لحاه الناس لما % % رأوه مطلقا في ذل عاني % % 3(@)(@@) % صبرت لما ألاقي في حبيبي % % على مضض المذلة والهوان % % 4(@)(@@) % نشدتك ياسلامة لم وأنى % % زمرت وكنت تعرف بالأغاني % % 5(@)(@@) % زمرت فأنت أحذق من زنام % % وقد نلقاك أحذق من بنان % % PageV01P4793 البحر : - 1(@)(@@) % قل لابن بوران إن كان ابن بوران % % فإن شكي فيه جل إيماني % % 2(@)(@@) % ياباطلا أوهمتنيه مخايله % % بلا دليل ولاتثبيت برهان % 3(@)(@@) % ماأنت إلا خيال طاف طائفة % % وما هجائيك إلا هجر وسنان % % 4(@)(@@) % قد كنت أحسبه شيئا فأهجوه % % حتى أزاح يقيني فيه حسباني % % PageV01P4794 البحر : - 1(@)(@@) % كل من خالف النعيم فمغبو % % ط ومن ذا لا يغبط الناعمينا % % 2(@)(@@) % غير قوم لهم نعيم مهين % % معقب أهله عذابا مهينا % % PageV01P4795 البحر : - 1(@)(@@) % للمادحون اليوم أهل زماننا % % أولى من الهاجين بالحرمان % 2(@)(@@) % كم قائل لي منهم ومدحته % بمدائح مثل الرياض حسان % 3(@)(@@) % أحسنت ويحك ليس في وإنما % % أستحسن الحسنات في ميزاني % % 4(@)(@@) % ياشاعرا أمسى يحوك مديحه % % في شر جيل شر أهل زمان % 5(@)(@@) % ماتستحق ثواب من كابرته % ورميته بالإفك والبهتان % % 6(@)(@@) % قوم تذكرهم فضائل غيرهم % % فيرون مافيهم من النقصان % % 7(@)(@@) % فإذا مدحتهم فتحت عليهم % بابا من الحسرات والأحزان % % 8(@)(@@) % ظلم امرؤ أهدى المديح لمثلهم % % ثم استثاب 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1142# مثوبة الإحسان % 9(@)(@@) % أيفيدهم أسفا ويطلب رفدهم % % لقد اعتدى وألظ في العدوان % % 10(@)(@@) % قد أحسنوا وتجشموا كل الأذى % % إذ أهدفوه مسامع الآذان % % PageV01P4796 11(@)(@@) % ذهب الذين يهزهم مداحهم % % هز الكماة عوالي المران % % 12(@)(@@) % كانوا إذا مدحوا رأوا ما فيهم % فالأريحية منهم بمكان % % 13(@)(@@) % والمدح يقرع قلب من هو أهله % قرع المواعظ قلب ذي إيمان % % 14(@)(@@) % فدع اللئام فما ثواب مديحهم % % إلا ثواب عبادة الأوثان % % PageV01P4797 البحر : - 1(@)(@@) % يا بني السمري لاتجشموني % % أن يثير القصيد كل دفين % 2(@)(@@) % قد تجاوزت ماتجاوزت عنكم % % وتغاضت على قذاكم جفوني % % 3(@)(@@) % فبعثتم عقارب الشر عودا % % وأمنتم بذاك غير أمين % % 4(@)(@@) % لايغرنكم بجهلي حلمي % % وارعوائي إلى حيائي وديني % % 5(@)(@@) % إن لين المهز في السيف أمضى % % لغراريه في صميم الشؤون % % 6(@)(@@) % لست بالمعزل القصي عن الشر % ر ولا في سبيله بعنون % % 7(@)(@@) % أتقي الشر جاهدا فإذا ما % % حم حمي تركته يتقيني % % 8(@)(@@) % يابني السمري لو لم تهيجوا % % طير جهلي لخيمت في الوكون % % 9(@)(@@) % يابني السمري هيهات هيها % % ت رجوتم مني سقاط أمون % % 10(@)(@@) % يابني معمل القوادم دأبا % % في صماليخ سمعه المأفون % % PageV01P4798 11(@)(@@) % كان مما يغل في أذنه الري % % شة حتى تغيب في اللغنون % % 12(@)(@@) % فإذا فارقته صب إليها % % واعتراه لفقدها كالجنون % % 13(@)(@@) % ماسمعنا فيما سمعنا بأذن % بليت قبلها بداء اللكون % % 14(@)(@@) % لئن استحلقت لذلك مما % % سمعت منكم خقيق البطون % % 15(@)(@@) % يابني السمري أفسدتم النس % ل وأفنيتم مني المتون % % 16(@)(@@) % من عذير النساء والنسل منكم % % أخذ الله منكم باليمين % % 17(@)(@@) % يابني السمري قد لزمتكم % % حرمة الروم ويحكم فاحفظوني % % 18(@)(@@) % أنا منهم وهم أظباء داء % % بين أحشائكم بطيء السكون % % 19(@)(@@) % جل ماكان من بلاغ أبيكم % % وصفه كل عاقل بثخين % 20(@)(@@) % يابني السمري ماهنوات % بين فكي أخيكم حسنون % % PageV01P4799 21(@)(@@) % بعض أضراسه يكادم بعضا % فهي مسنونة بغير سنون % % 22(@)(@@) % لادؤوب إلا دؤوب رحاها % % أو دؤوب الرحى التي للمنون % % 23(@)(@@) % لاتعطل رحالك يابن سلي % % مان فليس الثواب فيها بدون % % 24(@)(@@) % قسما لو وقفتها للمساكي % % ن لما مسهم غلاء الطحين % % 25(@)(@@) % فاهتبل أجر وقفها واتخذها % % لك فخرا في دولة المستعين % % 26(@)(@@) % فلهذا الأوان لاشك فيه % % كنت علمي تروضها منذ حين % 27(@)(@@) % ماظننت الإنسان يجتر حتى % % كنت ذاك الإنسان عين اليقين % % 28(@)(@@) % يابني السمري عيرتمونا % % بالصياصي تطاولا بالقرون % % 29(@)(@@) % قد تناولتكم 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1143# بما كف غربي % % معرضا عن نسائكم فاحذروني % % 30(@)(@@) % ولقد كنت رمتكم بهنات % هن ماهن قاطعات الوتين % % PageV01P4800 31(@)(@@) % فثنت عنكم النهى من عناني % % وأمامي ممد شأو بطين % % 32(@)(@@) % فانتهى المنتهون قبل عرامي % % وركوبي الفنون بعد الفنون % % 33(@)(@@) % إن للشعرفي قطاطة سبحا % إن تعرضتم وأحرجتموني % % 34(@)(@@) % دونكم مشكل الهجاء نذيرا % بفصيح من الهجاء مبين % % 35(@)(@@) % وإن استحوذ الشقاء عليكم % % فلساني بما وأيت رهيني % % 36(@)(@@) % أيها الجائرون في السير قصدا % إن في الجور وادي التنين % % 37(@)(@@) % فيمينا لئن ضللتم هداكم % % لأحلنكم بمنزل هون % % 38(@)(@@) % ثم يأبى الهجاء أو يتلافى % % وكس مابين غثكم وسميني % % 39(@)(@@) % فأوفيكموه بالصاع صا % % عين وفاء يسوء وجه المدين % 40(@)(@@) % لوجهلتم مادون أن تجهلوا ال % % حلم لعارضتكم بحلم رزين % % PageV01P4801 41(@)(@@) % لكن الجهل والسفاهة فيكم % % بمكان من القلوب مكين % % 42(@)(@@) % فقليل من جهلكم أن تظنوا % % بحليم ظنونكم بمهين % 43(@)(@@) % وثقيل علي رد القوافي % % لابوتري ولابشكر ثمين % % PageV01P4802 البحر : - 1(@)(@@) % وثقيل كأنه ثقل دين % % تتقذاه طالعا كل عين % % 2(@)(@@) % باطول من قرنه % واغلط من ذهنه % % 2(@)(@@) % فيطعن في دبره % أفانين من طعنه % % 2(@)(@@) % له سائس أير % يجول على متنه % % 2(@)(@@) % فيا من رأى والدا % بنوه بنو بطنه % 2(@)(@@) % وكائن من ابن له % % وإن كان لم يمنه % 2(@)(@@) % فجاء به مثله % % يضاهيه في أفنه % % 2(@)(@@) % تجلله عبده % % فأحبله بابنه % 2(@)(@@) % إذا ابن خيار بدا % % فحي على لعنه % 2(@)(@@) % حمل الله أرضه ثقيلهامتقارب إذا ابن خيار بدافحي على لعنه تجلله عبدهفأحبله بابنه فجاء به مثلهيضاهيه في أفنه وكائن من ابن لهوإن كان لم يمنهفيا من رأى والدا بنوه بنو بطنه له سائس أير يجول على متنه بذيء فيطعن في دبرهأفانين من % % وبراه علاوة الثقلين % % PageV01P4803 البحر : - 1(@)(@@) % مابال فرخ أبوه بلبل قمل % يكنى أبا الصقر يا أهل الدواوين % 2(@)(@@) % عروه من كنية ليست تليق به % % يكنى أبا الصقر من كان ابن شاهين % PageV01P4804 البحر : - 1(@)(@@) % عجب الناس من أبي الصقر إذ ول % لي بعد الإجارة الديوانا % % 2(@)(@@) % ولعمري ما ذاك أعجب من أن % كان علجا فصار من شيبانا % % 3(@)(@@) % إن للجد كيمياء إذا ما % % مس كلبا أحاله إنسانا % % 4(@)(@@) % توضع البطة للشاهين % % 4(@)(@@) % تواضعت لا للتقى والدين % % تحت فتى من قلبها مكين % % 4(@)(@@) % اير غليظ في حر سمين % % في 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1144# غادة وافرة المنين % % 4(@)(@@) % صوت يد العجان في العجين % % أو رجل طيان مشى ي الطين % % 4(@)(@@) % كأن صوت الأعجر المتين % % في طيز ذات الكفل الرزين % % 4(@)(@@) % يفعل الله مايشاء كما شاكأن صوت الأعجر المتينفي طيز ذات الكفل الرزين صوت يد العجان في العجينأو رجل طيان مشى ي الطين اير غليظ في حر سمينفي غادة وافرة المنين بذيء تواضعت لا للتقى والدينتحت فتى من قلبها مكين توضع البطة للشاهين % % ء متى كائنا ما كان % % PageV01P4805 البحر : - 1(@)(@@) % يامن قسا لما شكو % % ت إلى تطوله زماني % % 2(@)(@@) % واعتدني لما رخص % % ت عليه من سقط المعاني % % 3(@)(@@) % سأصون مالك عن يدي % % وأصون عرضك عن لساني % % 4(@)(@@) % آليت لا أهجو طوا % % ل الدهر إلا من هجاني % % 5(@)(@@) % لا بل سأطرح الهجا % % ء وإن رماني من رماني % % 6(@)(@@) % أمن الخلائق كلهم % % فليأخذوا مني أماني % % 7(@)(@@) % حلمي أعز علي من % غضبي إذا غضبي عراني % % 8(@)(@@) % أولى لجهلي بعدما % % مكنت حلمي من عناني % % 9(@)(@@) % ضمن التنزه كف غر % % بي والوفاء أخو ضماني % % 10(@)(@@) % فلأصبرن وأكظمن % ن وإن لظى غيظي كواني % % PageV01P4806 11(@)(@@) % لكنني سأحب نف % سي إذ قلاني من قلاني % % 12(@)(@@) % وأريدها كل الإرا % % دة إذ أباني من أباني % % 13(@)(@@) % وأرى مكاني إذ تعا % % مه من تعامه عن مكاني % % 14(@)(@@) % حتى يراني الله كي % ف صيانتي قدري وشاني % % 15(@)(@@) % ويعولني فعيالتي % % حق عليه كما براني % % 16(@)(@@) % ولتغذوني بالكرا % % مة إنه قدما غذاني % % 17(@)(@@) % وإن انتهى خبري إلى % % من كنت أخدمه كفاني % % 18(@)(@@) % ما كان غارس دوحتي % % يرضى ضياعي لو رآني % % 19(@)(@@) % وعليك ألف تحية % مني نهاني من نهاني % % 20(@)(@@) % وسأستعين على الفرا % % ق الصبر إن شوق دعاني % % PageV01P4807 21(@)(@@) % وسأستريح إلى اللقا % % ء النزر إن قلبي حداني % % 22(@)(@@) % له بنا خلوات يا للذتها % % تشفي القلوبوتجلوها من الرين % % 22(@)(@@) % حتى تبين أننيبسيط نحب كل غلام ميعتهينزو إا استنكناه بأيريين بذيء مصحح الجسم لم يلمم به سقم ولا استكان لهجران ولا بين ذاك الذي يخلص الود الصحيح لهونشتري نيكة منه بألفين بذيء له بنا خلوات يا للذتهاتشفي القلوبوتجلوها من الرين % % حر وإن حر جفاني % % 22(@)(@@) % نحب كل غلام ميعته % % ينزو إا استنكناه بأيريين % 22(@)(@@) % مصحح الجسم لم يلمم به سقم 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1145# % ولا استكان لهجران ولا بين % 22(@)(@@) % ذاك الذي يخلص الود الصحيح له % % ونشتري نيكة منه بألفين % % PageV01P4808 البحر : - 1(@)(@@) % لي صديق إذا تنوول عرضي % % أو رأى يوم نوبتي ذب عني % % 2(@)(@@) % فإذا ما رأى مشيدا بذكري % % أو رأى يوم غبطتي حط مني % % 3(@)(@@) % نفعه في شذا يدي لا رجائي % % فهو لي كالطبيب لا كالمغني % % 4(@)(@@) % ليس يجدي علي في يوم سلمي % % وهو في الحرب منصلي ومجني % % 5(@)(@@) % لست أنفك بين ضدين منه % % واعتدادي به شديد وضني % % 6(@)(@@) % علم نفسي بأن كل خليل % لم يصور كصورة المتمني % % 7(@)(@@) % سؤل نفسي المعنى بي لا المعنى % % ويعز المعنى بي لا المعني % 8(@)(@@) % ذهب الواضعون ثقل التجني % % عنك والجاملون ثقل التجني % % PageV01P4809 البحر : - 1(@)(@@) % أقول لما رأيت عرسي % % تسترزق الله باليدين % 2(@)(@@) % سيجعل الله بعد عسر % يسرا بجدوى أبي الحسين % 3(@)(@@) % للفال بشرى بذاك عندي % % ليست بزور ولا بمين % % 4(@)(@@) % ما اتصلت آية بشعري % % تكفل باليسر مرتين % % 5(@)(@@) % إلا لأمر يكون فيه % % قرة عين ونعم عين % 6(@)(@@) % من حسن حال ورفه بال % ورفع قدر وحط دين % % PageV01P4810 البحر : - 1(@)(@@) % وضرطة وهب من الحادثات % % إذا ذكرت حادثات الزمن % 2(@)(@@) % فأقسم لو كان حيا بكى % % بما صنعت ريحكم بالدمن % % 2(@)(@@) % أيا آل وهب لقد رعتم % عظام النواسي أعني الحسن % % 2(@)(@@) % إليك المعول والمشتكى % % فمن بعفوك يا ذا المنن % 2(@)(@@) % أهذا الغلاء وهذا البلاءإليك المعول والمشتكى فمن بعفوك يا ذا المنن أيا آل وهب لقد رعتمعظام النواسي أعني الحسن فأقسم لو كان حيا بكى بما صنعت ريحكم بالدمن % % وهذا الضراط وهذي الفتن % % PageV01P4811 البحر : - 1(@)(@@) % ماالشكر مني لما أوليتني ثمنا % % وإن أطلت به بين الورى لسنا % % 2(@)(@@) % هيهات لاتعسر الأوصاف من فطن % رحب المقالة منك الطول والمننا % % 3(@)(@@) % لم تخلني ساعة من بذل عارفة % وأن أرى مخليا من نشرها أذنا % % 4(@)(@@) % قد كنت قدما أخا عتب على زمن % % بادي الفساد أصلحت لي الزمنا % % 5(@)(@@) % حسب العلى شرفا والمكرمات بأن % طلت لكم مابنى شيبانها سننا % % 6(@)(@@) % جدتم فلا جود إلا دون جودكم % % ونلتم من عظيم الجود ماشطنا % % 7(@)(@@) % وإن طوى وطن حبا لنجعته % % كنتم لآمال أهل النجعة الوطنا % % 8(@)(@@) % فمن يناضلكم أو من يطاولكم % % أو من يوازنكم حلما وإن وزنا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1146# % % 9(@)(@@) % أنتم غيوث ندى ترجى وأسد وغى % تخشى وأقمار ليل تكشف الدجنا % % 10(@)(@@) % وأنت سيد هذا الخلق كلهم % طولا وفضلا وإنعاما وسيدنا % % PageV01P4812 11(@)(@@) % كم يا أبا الصقر من نعمى تركت بها % % شكري على غابر الأيام مرتهنا % % 12(@)(@@) % وكم صرفت حميد الفعل عن ظلمي % % صرف الزمان ذميم الفعل مدهنا % % 13(@)(@@) % وكم مددت بإحسان إلى عسري % % يوما من اليسر مأمون الردى حسنا % % 14(@)(@@) % أبقاك ذو العرش أعواما مضاعفة % فلن تزال بخير ما بقيت لنا % % 15(@)(@@) % وصانك الله من كل المكاره وال % أسواء مادمت حيا بل وقاك بنا % % PageV01P4813 البحر : - 1(@)(@@) % باكر صباح المهرجا % % ن بقبض أرواح الدنان % 2(@)(@@) % واستنطق العود الفصي % % ح عن المثالث والمثاني % % 3(@)(@@) % ببيان بدعة إنها % % في الحذق من بدع الزمان % 4(@)(@@) % تحكي بحسن غنائها % % تصديق جودك للأماني % % 5(@)(@@) % وجمال وجهك إنه % % من كل محذور أماني % % 6(@)(@@) % يا واحد الكرم الذي % % ما إن له في الحسن ثاني % % 7(@)(@@) % ما لي جفيت وما شغل % ت بغير شكركم لساني % % 8(@)(@@) % وجعلت من سقط الحمي % % ر وكنت من خيل الرهان % 9(@)(@@) % مع أنني مكنت كف % فك خاضعا لك من عناني % % 10(@)(@@) % أعزز علي بأن أرى % % خلوا لديك من المعاني % % PageV01P4814 البحر : - 1(@)(@@) % أيها السيد الذي جل عن % شكري معروفه وجاز التمني % % 2(@)(@@) % وأبى أن يشوب غر أيادي % % ه لدى معتفيه جودا بمن % 3(@)(@@) % ما لرزقي كأن على البي % % يض تخطيه من تباطيه عني % % 4(@)(@@) % أي دين يقضى بتقسيط دينا % % ر وحال تشد من بعد وهن % % 5(@)(@@) % وجمال تقاد من بعد إخلا % % ق ومهر يطوي على كف تبن % 6(@)(@@) % وانتفاع ينال من بعد ضر % % وسرور يحل من بعد حزن % 7(@)(@@) % وهو يختل عن قفيز دقيق % وسلاف من المدامة لدن % 8(@)(@@) % ثم لا يرتضيه شرطا له يو % م كساد منه ابن قيل المغني % % 9(@)(@@) % أنا غرس لراحتيك وأنت ال % غيث يحيا بصوبه كل غصن % 10(@)(@@) % وبه تكتسي الرياض بقاعا % مونقات من كل سهل وحزن % % PageV01P4815 11(@)(@@) % فاسقني شربة يعود بها عو % % دي غضا عن ريه ذا تثني % % 12(@)(@@) % وأعني على قضاء ديون % فرقت بين طعم نومي وجفني % % 13(@)(@@) % إنني شاكر إذا عن بالشك % ر شكور وجد مطر ومثني % % PageV01P4816 البحر : - 1(@)(@@) % ناشدتك الله أن تستفسد المننا % % يا ابن الوزيرين 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1147# أو تستشهد الظننا % % 2(@)(@@) % والقرب منك لقد غششت منتصحا % من محضري ولقد خونت مؤتمنا % % 3(@)(@@) % إني امرؤ مستعيذ أتهجنني % % أو أن أرى بحجاب منك ممتهنا % % 4(@)(@@) % لايكتبن على وجهي حجابكم % من اغتدى مستزيدا راح ممتحنا % % 5(@)(@@) % إن كان عتبك ضنا فهو عارفة % لايعرف الناس في الدنيا لها ثمنا % % 6(@)(@@) % وإن يكن ذاك إعناتا لمقلية % فقد غدوت بسوء الحال مرتهنا % % 7(@)(@@) % روحي رضاك وتأميلك ما بقيا % % فإن سخطت فماذا يمسك البدنا % % 8(@)(@@) % لا أبتغي غير أخلاق خصصت بها % % دون السهام التي فوقتها جننا % % 9(@)(@@) % وقد فتحت لواش باب حيلته % % فاستعمل العين بعد اليوم لا الأذنا % % 10(@)(@@) % يا من سطا بهزيل لا حراك به % % أسمنه ثم انتقم منه إذا سمنا % % PageV01P4817 11(@)(@@) % لم يأذن الرأي في الشكوى فأشكوكم % وقد شكاكم لنا ما تفعلون بنا % % 12(@)(@@) % أشكو إليك ولا أشكوك يا وزري % % وكيف يشكوك من أعفى له الزمنا % % 13(@)(@@) % تالله أشكو زمانا أنت صاحبه % % ولو تملأت من أفعاله إحنا % % 14(@)(@@) % وقد نظرت بعين غير كاذبة % فلم أجدك على الأيام مضطغنا % % 15(@)(@@) % أليس قد قربتني منك في دعة % وأسعدتك كفتها هذه مننا % % 16(@)(@@) % يا أسمح الناس نفسا باللهى ويدا % وأفسح الناس في مكروهة عطنا % % 17(@)(@@) % قد بان غي أناس في تخرصهم % % لك العيوب فلا تجعل لهم لسنا % % 18(@)(@@) % هبني خلعت بجهل فارط زيني % % أخالع أنت يا ذا الحكمة الزينا % % 19(@)(@@) % لايسخطنك ذنب غير معتمد % % على الوفاء الذي استخلصته سكنا % % 20(@)(@@) % أنجز مواعيد قد شدت معاقدها % % شد المواثق إن الخلف قد لعنا % % PageV01P4818 21(@)(@@) % واعلم بأن شهود الشعر قد شهدت % % قدما وأن ضمير المجد قد ضمنا % % 22(@)(@@) % يا من إذا حكت فيه المدح أوسعني % % مجدا فلم أجتلبه من هنا وهنا % % 23(@)(@@) % ومن إذا ما أقامت لي مواهبه % % فما أبالي أقام الغيث أم ظعنا % % 24(@)(@@) % لا تهجرن أليفا إلا لفاحشة % إن الكريم يرى ألافه وطنا % % 25(@)(@@) % سلط علي حيائي منك حسبكه % ولا تسلط علي الهم والحزنا % % 26(@)(@@) % ها قد سألتك غفرانا ونافلة % فلا أكن كالمعنى يسأل الدمنا % % 27(@)(@@) % ولا يقولن حسادي دعا وثنا % وإنما كنت أدعو الله لا الوثنا % % 28(@)(@@) % أعجب بحاجة ملهوف تؤخرها % % عناية مع إمكان قد اعتونا % % 29(@)(@@) % ولو عقلت ما حاولت نافلة % ولا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1148# بكيت وقد أقصيتني شجنا % % 30(@)(@@) % أمثل سخطك يدهوني فيكربني % % شيء سواه وإن مثقاله وزنا % % PageV01P4819 31(@)(@@) % في سوء رأيك لي عن غيره شغل % ينفي الكرى عن جفون العين والوسنا % % 32(@)(@@) % لو يئست من العتبى وفتنتها % % لما حفلت أطار الحظ أم وكنا % % 33(@)(@@) % لكن نفسي تمنيني مراجعة % وربما قرب الأمر الذي شطنا % % 34(@)(@@) % ولم أكن عن رجاء فيك منصرفا % ولو عدلت بذنب واحد حضنا % % 35(@)(@@) % وفي الرجاء على الإجرام تعفية % عند الأشداء في آرائهم مننا % % 36(@)(@@) % ولو فطنت لكان الذنب حينئذ % ذنبين لا شك إلا عند من أفنا % % 37(@)(@@) % فاعذر على طلبي جدواك في هنة % دهياء تنسي السقاة الغرب والشطنا % % 38(@)(@@) % جاذبتني الحبل حتى كدت تصرمه % % عن غير جرم فصادفت امرأ طبنا % % 39(@)(@@) % إن احتجبت فلم تنصفك غاشية % واستنكفت قال بدر ربما دجنا % % 40(@)(@@) % وإن مطلت فلام الناس قال لهم % % غيث يجود إذا ما ربه أذنا % % PageV01P4820 41(@)(@@) % وإن تعتبت أو أعرضت آونة % ناجى النهى واستلان الجانب الخشنا % % 42(@)(@@) % وإن تلومت في أمر يقوم به % % قال اتقى العثر محمودا وما وهنا % % 43(@)(@@) % فلست تعدم منه عاذرا أبدا % مسددا يجمع الأفهام واللقنا % % 44(@)(@@) % أتبعت جدبك طوعي لا كذي خطل % % ممن تقاعس إذ جاذبته القرنا % % 45(@)(@@) % مافوق ظاهر ودي ظاهر حسن % % وإن أحسن منه للذي بطنا % % 46(@)(@@) % أما لنا فيك آراء مسددة % فلا تعدن أهواء ولافتنا % % 47(@)(@@) % وقد جعلت لدعوى طاعن سببا % فلا تبرهن على الدعوى إذا طعنا % % 48(@)(@@) % لاتغبنن موالاتي ولا مدحي % % فقد عهدتك ممن يكره الغبنا % % 49(@)(@@) % ولا تفتك العلى يا بن الألى شرعوا % % فيها الشرائع واستنوا لها السننا % % 50(@)(@@) % قوم تخطت إلى الأعقاب أنعمهم % % حتى غذتهم غذاء سابق اللبنا % % PageV01P4821 البحر : - 1(@)(@@) % عزمت على تطليق عرسي لعسرتي % % فعاذت بحقوي قاسم وأرنت % % 2(@)(@@) % ونادت نداء المستجيرة باسمه % فقلت أجرنا جارة فاطمأنت % 3(@)(@@) % أمانك عندي ما حييت مؤكد % وإن لم تعدي حرمة قد أسنت % % 4(@)(@@) % أقاسم أنت الحرز مما تخافه % % إذا ما الليالي أذنبت وأجنت % 5(@)(@@) % أجرت لأني في جوارك واثق % بعروتك الوثقي إذا النفس ظنت % % 6(@)(@@) % وأعفيت من عزمي على الصرم حرة % إذا هي خافت فاجع البين أصنت % % 7(@)(@@) % وما بي صنت إذ عزمت فراقها % % ولكن بحظي من ولائك ضنت % 8(@)(@@) % ولا لؤمت 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1149# نفسي ولا ساء عهدها % % ولكنها جن الزمان فجنت % % 9(@)(@@) % وكنت إذا ما نفس حر تطلعت % % إليك مناها أعطيت ما تمنت % % 10(@)(@@) % ولو يممت من مقطع الترب عصبة % ذراك على علاتها ما تعنت % % PageV01P4822 11(@)(@@) % أقول لعذال نداك شجاهم % % دعوا مزنة السقيا إذا هي شنت % 12(@)(@@) % دعوا راحة لم يخطر سيبها % % ولا أنعمت يوما فمنت ومنت % % 13(@)(@@) % وما سنة الشيطان سنت ببذلها % % فواصلها بل سنه الله سنت % 14(@)(@@) % أقاسم لا تعدم سجايا رضية % إذا نقرت نقر الدنانير طنت % % 15(@)(@@) % سجايا إذا همت بخير تسرعت % إليه وإن همت بسوء تأنت % 16(@)(@@) % بكت شجوها الدنيا فلما تبينت % مكانك منها استبشرت وتغنت % 17(@)(@@) % وكانت ضئيلا شخصها فتطاولت % وكانت تسمى ذلة فتكنت % 18(@)(@@) % لتستمتع الدنيا بوجهك دهرها % % فقد طال ما اشتاقت إليه وحنت % 19(@)(@@) % وكان بها عشق قديم تجنه % فلما أذيلت أظهرت ما أجنت % % 20(@)(@@) % وما شان نعمى الله وجه حملته % % تزوجت النعمى به أم تبنت % PageV01P4823 21(@)(@@) % ثوت في نعيم نعمة الله إذ غدت % وراحت وظلت في ذراك استكنت % PageV01P4824 البحر : - 1(@)(@@) % دع الوقوف على الأطلال والدمن % وذكر جيرتك الغادين للظعن % % 2(@)(@@) % وامدح فتى حظه من وفر ثروته % % كحظ ناظره من وجهه الحسن % 3(@)(@@) % كما يرى الناس في يوم محاسنه % ما لا يراهن بالمرآة في الزمن % % 4(@)(@@) % كذاك حظهم من ماله وله % أدناه إذ لا يرى في ذاك من غبن % 5(@)(@@) % لا يشتري الحمد بل يعطي اللهى هبة % لا حمد للمشتري في الجود بالثمن % 6(@)(@@) % ممن يرى أنه لم يعط سائله % % إلا إذا هو أعفاه من المؤن % % 7(@)(@@) % ولا يرى منه منا على أحد % حتى تحمل عنه محمل المنن % % 8(@)(@@) % من ذاك أضحى جميل الذكر متصلا % % به الثنا اتصال الروح بالبدن % 9(@)(@@) % يا بن المسيب خذها مدحة قصرت % وطال فيها عناء الدهر والفطن % 10(@)(@@) % لها محاسن في الأسماع مونقة % تدعو الحسود إلى الإصغاء والأذن % PageV01P4825 البحر : - 1(@)(@@) % لو درى كيف موقع العذل مني % % كف من غربه وأقصر عني % % 2(@)(@@) % لج يلحى على المدام خليعا % % سلبت عقله عقيلة دن % 3(@)(@@) % قسم الدهر بين طاس وكأس % % ثم خل مساعد ومغن % % 4(@)(@@) % لا تلمني إذا عصيتك في ال % % كأس فأما إذ أطعت فلمني % % 5(@)(@@) % وشمول أرق من دمع مشتا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1150# % % ق إذا انغل بين جفن وجفن % 6(@)(@@) % عتقت في الدنان حتى استفادت % % بعد حين نسيم جنة عدن % 7(@)(@@) % وكساها المقام لونا تحلت % % فيه من كأسها كرقة ذهن % % 8(@)(@@) % عانس تقهر الشباب عجوز % بنت قرن من الزمان وقرن % % 9(@)(@@) % سالمتها حوادث الدهر دهرا % فأتت وهي غاية المتمني % % 10(@)(@@) % فهي مثل اليقين صرفا وتبدو % % لك إن شعشعت كوهم وظن % % PageV01P4826 11(@)(@@) % قهوة عن طرائف الطيب تقهي % % شاربيها إذا أديرت وتغني % % 12(@)(@@) % وإذا ما أدارها دائر الأص % داغ حلو الكلام بدع التثني % % 13(@)(@@) % خلت شمسا تدور في كف بدر % بين هذا وتيك أهيف غصن % % 14(@)(@@) % وقفار لا إنس فيها خلاء % تحسر العين مثل ظهر المجن % % 15(@)(@@) % فدفد مقشعرة النبت قاع % غير معهودة بواكف مزن % % 16(@)(@@) % صبحتني إلى أبي الفضل فيها % % عزمة تبعد الغرام وتدني % % 17(@)(@@) % وظنون نفت أذى السير عني % % وحمتني من كل سهل وحزن % % 18(@)(@@) % وأياد ألفتها منه بيض % هي أجدى من ثرة الفيض دكن % % 19(@)(@@) % سيد لي إن هاض دهر جناحي % % جبرت راحتاه كسري ووهني % % 20(@)(@@) % إن عرتني ملمة كان ركني % % أودهتني عضيهة كان حصني % % PageV01P4827 21(@)(@@) % يهدم المال في ابتناء المعالي % % بيد ثرة تشيد وتبني % % 22(@)(@@) % بدر تم في بهجة وعلو % % فات بالجود كل مطر ومثني % % 23(@)(@@) % وأخو السيد الذي ليس يفنى % % عد آلائه بل العد يفني % % 24(@)(@@) % الهمام الذي أذل صعاب الن % ناس قسرا بالعدل لا بالتظني % % 25(@)(@@) % القريب البعيد والضاحك القا % % طب والمستثير كالمستكن % % 26(@)(@@) % المهني بكل نصر وفتح % % وظهور على العدا لا المهني % % 27(@)(@@) % جمع الله كل فضل وحسن % في الحسين الموفى على كل حسن % % 28(@)(@@) % وأبي الفضل ذي الندى والأيادي % % والمعالي محمد الحر أعني % % 29(@)(@@) % منعشي لا عدمته ومريشي % % ومعيني على الزمان وركني % % 30(@)(@@) % والذي لو جحدت نعماه حاشا % % ي لقامت آلاؤه الغر تثني % % PageV01P4828 31(@)(@@) % أنا رهن بشكره عن أيادي % % ه ولكنني علقت برهني % % 32(@)(@@) % أيها النجد خانني فيك مدح % كان أذكى الأشياء لو لم يخني % % 33(@)(@@) % كيف يسطيع أن يجازي عن % جودك بعضي يا مالك الكل مني % % 34(@)(@@) % لك نعت يجوز وصفي ونعتي % % ببلاغي عن المقال وظني % % 35(@)(@@) % ويد تستهل من غير ما ضن % ن ومن يمن من غير من % 36(@)(@@) % وحجى يغلب الحجي ودهاء % جل فيه عن 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1151# كل إنس وجن % % 37(@)(@@) % وطباع أرق من حال راجي % % ك وخلق مستحسن غير شثن % % 38(@)(@@) % واهتشاش إلى العفاة بوجه % طلق للعفاة ضاحك سن % 39(@)(@@) % وعطاء بلا عناء ويا رب % ب عطاء جم المطال معني % % 40(@)(@@) % يا بديع الجمال في كل حل % وغريب الكمال في كل فن % PageV01P4829 41(@)(@@) % أنت أخرستني عن الدهر بالجو % % د ولولا الحسين كنت أزني % % 42(@)(@@) % أنت أطلقتني من السجن والإع % % دام سجن يضيق عن كل سجن % % 43(@)(@@) % فسأسني لك المديح فما زل % % ت فدتك النفوس تعطي فتسني % % PageV01P4830 البحر : - 1(@)(@@) % يا ليت شعري عنك يا حرماني % % من ذا تكيد إذا التقى السيلان % % 2(@)(@@) % سيان عندي يوم ذاك أكدتني % % أم بلت حيث تناطح البحران % 3(@)(@@) % وأظن ظنا كاليقين وثاقة % أني وأنك ثم مصطحبان % % 4(@)(@@) % نبغي جميعا نجوة ننجو بها % % مما يطيف بنا من الطوفان % % 5(@)(@@) % وأقول حين تموت كل حزازة % % نسي الغريق شكية العطشان % PageV01P4831 البحر : - 1(@)(@@) % أحق برفدك من آملي % % ه من لم يؤمله في الآملينا % % 2(@)(@@) % ومن كان ودك لا للجدا % % ولكن لنفسك حقا يقينا % % 3(@)(@@) % وإني لمن أخلصت نفسه % لك الود قدما مع المخلصينا % % 4(@)(@@) % ولكنني اضطرني حادث % إليك فكن لي عليه معينا % % PageV01P4832 البحر : - 1(@)(@@) % لو أنني ملكت طرد محبتي % % إياك عن روحي وعن جثماني % % 2(@)(@@) % لطردتها جهدي فكنت بأن أرى % % لك زائرا والهجر في إمكاني % % 3(@)(@@) % ولئن تركت فأنت موضع رغبتي % % ولئن هجرت فأنت من أشجاني % % 4(@)(@@) % لكن أسأت بي الإساءة كلها % % فجعلت هجرانيك من إحساني % % 5(@)(@@) % قبح الإله إخاء ظلم بيننا % % أرعاك فيه وأنت لا ترعاني % % 6(@)(@@) % هيهات قد حلفت علي حزامتي % % إلا أبيع كرامتي بهوان % % 7(@)(@@) % ولئن فعلت لبعد كونك للردى % % عونا علي وأنت من أعواني % % 8(@)(@@) % فاذهب إليك فإنني لا أبتغي % % مددا علي لنائبات زماني % % 9(@)(@@) % ولأعقلن عن الغوائل حيلتي % % ولأعقلن عن الهجاء لساني % % PageV01P4833 البحر : - 1(@)(@@) % أصبت مصائب كنت الشري % % ك فيها الكثير السخا والشجون % 2(@)(@@) % فما لي لديك كأني الذي % % رماك بها دون ريب المنون % 3(@)(@@) % سقى الله موتى بكيناهم % أسى لأساك بدمع هتون % % 4(@)(@@) % على أنهم قطعوا بيننا % % وبينك حبل وصال أمون % % 5(@)(@@) % عتبت علي لأن الزما % % ن ينحى عليهم ببرك طحون % % 6(@)(@@) % ولو نستطيع وقيناهم % وصناهم لك بين الجفون % % 7(@)(@@) % ولو من 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1152# سواك أتت هذه % % لأصبح نصبا لرجم الظنون % % 8(@)(@@) % وقيل وإن كان ذا حكمة % أصابته طائفة من جنون % % PageV01P4834 البحر : - 1(@)(@@) % سمعا أبا إسحق إنك ماجد % وعلى حقوق المجد جد أمين % 2(@)(@@) % ماذا تقول إذا سئلت محاسبا % والظالمون على شفا سجين % % 3(@)(@@) % لم نام جودك عن ثواب مدائح % جاءتك من رجل مجيء يقين % % 4(@)(@@) % وطفقت توعده بكل عظمة % لنميمة جاءت مجيء ظنين % % 5(@)(@@) % إن التثبت والأناة على امرىء % % عدل القضاء من السداد مكين % % 6(@)(@@) % أيظل مدحي في مقام مبارز % وترى هجائي في مغار كمين % % 7(@)(@@) % لايلفينك ذو الجلال محاولا % % تبيين مطموس وطمس مبين % % 8(@)(@@) % بالله أحلف أن ما حدثته % % كذب أرى حبلا بغير جنين % % 9(@)(@@) % أيهيج مثلي بأس مثلك بالخنا % % كمقارع الصمصام بالسكين % % 10(@)(@@) % وهب الحقيقة كل ما حدثته % % أين السماح وقد أعنت بدين % % PageV01P4835 11(@)(@@) % أقل العثار كما أقلت نظيره % والمس خشونة ما ملكت بلين % % 12(@)(@@) % يا صاحب التمكين أد زكاته % % فالصفح خير زكاة ذي التمكين % % 13(@)(@@) % ومتى شجاك مهجن فاغفر له % % حتى روح مكذب التهجين % % 14(@)(@@) % فتكيده كيد المعاتب محرزا % أجر المقيل وأنت غير غبين % % 15(@)(@@) % أهدى لك التهجين فانتدبت له % % حيل الكريم فصار كالتزيين % % 16(@)(@@) % أعملت حلمك في السفيه وجهله % رحب الجوانح صادق التوطين % 17(@)(@@) % وأبان ذلك إفك خصمك فانثنى % % وهو المشين وأنت غير مشين % % 18(@)(@@) % ولو انتقمت لكنت من أشهاده % % ورفدت غث مقاله بسمين % % 19(@)(@@) % إني لأعلم أن عندك نفثة % % تشفي السقيم ونفثة التنين % % 20(@)(@@) % فعلام أعرض للتي فيها الردى % % وأروغ عن تلك التي تشفيني % % PageV01P4836 21(@)(@@) % أأواثب الوزراء في ملكوتهم % إني إذا لأوزة الشاهين % % 22(@)(@@) % ما من يساق إلى انتجاعك للندى % % ممن يساق كذا إلى التحيين % % 23(@)(@@) % أغرب على الكرماء في أكرومة % تلقى الرواة بها ملوك الصين % % 24(@)(@@) % ومن الغرائب في المكارم والعلى % % صبر العزيز لسطوة المسكين % % 25(@)(@@) % والعفو عن جان ملكت عقابه % طرف من الإنشاء والتكوين % 26(@)(@@) % أو ما يسرك أن تشبه بالذي % % يحيي العظام وأنت غير لعين % % 27(@)(@@) % بل أنت في هذا التشبه فائز % وبأن تثاب عليه جد قمين % % 28(@)(@@) % فاعف التي عرف الإله براءتي % % منها وتلك شهادة تكفيني % % 29(@)(@@) % وحلفت لا أرضى بعفوك وحده % % حتى يلذ من اللهى بقرين % % 30(@)(@@) % وحلفت لا أرضى قرينا واحدا % وليثنين وأنت 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1153# غير ضنين % % PageV01P4837 31(@)(@@) % وحلفت لا أرضى بذلك كله % % حتى يدوم فلا زوال لحين % % 32(@)(@@) % ولئن حلفت لما حلفت مغررا % ضمنت يمينك بر كل يمين % 33(@)(@@) % ولئن وثقت لما وثقت مخاطرا % ما استمسكت كفي بغير متين % % 34(@)(@@) % وضمين نفسي طيب خيمك وحده % % حسبي به من دون كل ضمين % % 35(@)(@@) % سيكون لي متنفسا لا كربة % % ولذاك كنت بموضع العرنين % % 36(@)(@@) % لا لا أخافك إن عدلك مأمني % % مما أخاف وصامن تحصيني % % 37(@)(@@) % قد كان بشر نال أوسا بالأذى % % فعفا له وصغا إلى التهوين % % 38(@)(@@) % وحباه خير حبائه فغدت به % % وجناء تغشى حد كل وجين % % 39(@)(@@) % من بعد ما احتدمت عليه عصبة % حرى تفور على ذوي التسكين % % 40(@)(@@) % فذكت له ناران نار مطمطم % قذف ونار مجمجم سجين % % PageV01P4838 41(@)(@@) % ولأنت أولى بالتجاوز والندى % % يا بن الملوك وساسة الآيين % % 42(@)(@@) % لا يستفزك بالمكارم سوقة % وأبوك أكرم دائن ومدين % % 43(@)(@@) % دع ما أريك من المحاسن واستشر % عينيك في التقبيح والتحسين % % 44(@)(@@) % أقم العقوبة والمثوبة جانبا % وتخير الحسناء في التدوين % % 45(@)(@@) % لايسبقن إلي يا من لا يرى % % شأوا له في المجد غير بطين % % 46(@)(@@) % ومتى غدوت لديك شر صنيعة % فاعلم بأن الطول خير خدين % % 47(@)(@@) % بوأتني من حوت يونس منزلا % فمتى أنوء بمنبت اليقطين % % 48(@)(@@) % دنياي ضيق مذ سخطت وظلمة % والموت يتبع ذاك أو تحبيني % % 49(@)(@@) % ولديك للمكروب أوسع همة % عطفا وأنور غرة وجبين % % 50(@)(@@) % فأفىء علي ظلال عطفك % إنني في مظلم الأرجاء غير كنين % % PageV01P4839 51(@)(@@) % لا تغلظن على امرىء لم يجترم % جرما وأنت أرق من تشرين % % 52(@)(@@) % لا يفسدن ثناك زور مزور % وثناك نشر الورد والنسرين % % 53(@)(@@) % لا تجعلنك عصبة عن ظنة % حزني وأنت سرور كل حزين % % 54(@)(@@) % خذل الإله لديك خاذل حجتي % % وأعان كل معاضد ومعين % % 55(@)(@@) % يا ليت شعري كيف يصنع كائدي % % غلي عليه يديه بالتوهين % 56(@)(@@) % أيثير من شعري دفين عيوبه % % ولكل شعر مستثار دفين % % 57(@)(@@) % أم يرتجي ألا يثيب خسيستي % % عند النشيد بضعف ما يغنيني % % 58(@)(@@) % فذر المقدر أن يخونك نظرة % فترى رصين القول غير رصين % % 59(@)(@@) % أو ما درى أن السماحة في الفتى % % إغلاؤه ثمنا لغير ثمين % % 60(@)(@@) % خاب المؤمل فيك ظلم مؤمل % وإن استماح بهين ومهين % PageV01P4840 61(@)(@@) % أغنته ترجية المحال ولم يكن 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1154# % % بمسير في البر ركب سفين % % 62(@)(@@) % من رام سكر البحر عن طرقاته % أرهنته بالعجز ألف رهين % % 63(@)(@@) % ما للذي قطع الشهادة كاذبا % % منع الشهادة ساعة التلقين % % 64(@)(@@) % ولك التفطن قبل كل مفطن % ولك التبين دون ذي التبيين % % 65(@)(@@) % لا تزبرن على الضعيف فربما % % ظلم الزبير فعاد رجع أنين % % 66(@)(@@) % ولقد ترى الشعراء في عثراتهم % % فتليهم بإقالة ترضيني % % 67(@)(@@) % وترى أجاجتهم معينا سائغا % لطباع صدق ساخ فيه معيني % % 68(@)(@@) % حور المكارم يتمتك وعينها % % لا الشعر محفوفا بحور عين % % 69(@)(@@) % لو كنت من متحننيك وددتني % % وقرنت ذكر معاهدي بحنيني % % 70(@)(@@) % لكن أراني إذ حفتك مسائلي % % خشنت صدرك أيما تخشين % % PageV01P4841 71(@)(@@) % وكأنني بك شاكر لك قائل % إن الكريم يلين للتليين % % 72(@)(@@) % لاقيت إبراهيم يرجح في الندى % % والحلم والتقوى بكل وزين % % 73(@)(@@) % خفت مناهضه فخف إلى العلا % % ورسا بحلم كالجبال رزين % % 74(@)(@@) % أعفى بحاجاتي وقد حملته % ما لا تحمل خلقة من طين % % PageV01P4842 البحر : - 1(@)(@@) % يا كريما لم يزل محتملا % % محنا في عبده بعد محن % 2(@)(@@) % يتلقى في ما يأذى به % % وأكافيه بأنواع الظنن % 3(@)(@@) % وهو لا ينفك من عوداته % % فيه بالآلاء تترى والمنن % 4(@)(@@) % بالذي لو فاخر الخلق اعتلى % % والذي لو وازن الخلق وزن % % 5(@)(@@) % اعف عني وأقلني عثرتي % % يا عياذي لملمات الزمن % % 6(@)(@@) % لاتعاقبني فقد عاقبني % % ندم أقلق روحي في البدن % % 7(@)(@@) % بنظير الشمس والبدر الذي % % زانه الله بمنفوس الزين % % 8(@)(@@) % والذي لولاك أضحى لا يرى % % رأي حق إن في الدين سكن % % 9(@)(@@) % يا آمنا عنده مؤتمنا % % كن على المجد أمينا مؤتمن % % 10(@)(@@) % واجعل العفو لحمدي ثمنا % فلكم أغليت بالحمد الثمن % % PageV01P4843 11(@)(@@) % إن ما أمسيت تعتد به % لم يكن سر نفاق فعلن % 12(@)(@@) % إنما كان هفوءا ساقه % % سهو قلب بين هم وحزن % % 13(@)(@@) % لا تطير وسنا عن مقلة % أنت أهديت لها حلو الوسن % % 14(@)(@@) % لم يصرح لك بالسوء ولا % % أضمر السوء اعتمادا إذ لحن % % 15(@)(@@) % لك سلطان عزيز فإذا % % أنت لم تعف عن الجاني وهن % 16(@)(@@) % أي سلطان وقد أصبحتما % % كمسيء ومسيء في قرن % % 17(@)(@@) % ومتى لم تعف عن ذي هفوة % مرد القلب عليها ومرن % 18(@)(@@) % كن عزيزا بالتغاضي إنه % % يترك الجاني مسلوب اللسن % 19(@)(@@) % ومتى لاحظته في مجلس % ضرب الزور ذليلا بالذقن % % 20(@)(@@) % خاشع الطرف 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1155# عليه ربقة % يخضع الجيد من العفو الحسن % % PageV01P4844 21(@)(@@) % هو عز غامض فافطن له % % يا ذكي القلب والعين فطن % 22(@)(@@) % وازجر النفس إذا ما حزنت % أن يفوت القوم سبقا من حزن % % 23(@)(@@) % لا تضق عفوك عني واجزني % % يا فسيخ العفو يا رحب العطن % 24(@)(@@) % رب نفس حرة قد ألفت % وطن السوء فهب أني وطن % % 25(@)(@@) % كيف تستسهل إبعاد امرىء % قد بنى إلفك فيه وقطن % % 26(@)(@@) % إنني من حمأة مسنونة % % وأرى أنك من خير الطين % % 27(@)(@@) % إن أطعت النفس في رفض العلى % % واطراح الحمد ذمتك المنن % % 28(@)(@@) % ورأت أنك لم تحفل به % % حين دلتك على قصد السنن % % 29(@)(@@) % إن أطعت النفس في رفض % بها حين دلتك على قصد السنن % % 30(@)(@@) % قد دعتك النفس من غمرتها % % فتداركها فلم تدع وثن % % PageV01P4845 31(@)(@@) % وانخدع لي أو تخادع إنها % % خدعة فيها رباح لا غبن % % 32(@)(@@) % إن تناومت فمن ذا أرتجي % % أو تصاممت فلم تسمع فمن % % 33(@)(@@) % واعذر اللهفان في أفعاله % % إنه يغشى ويعمى ويجن % % PageV01P4846 البحر : - 1(@)(@@) % أقرن إلى حسن وجهك الحسن % فعلك وانظر بعين ذي فطن % % 2(@)(@@) % تنظر إلى أحسن المناظر مق % % رونا بأدنى فعالك الحسن % % 3(@)(@@) % عنيتني والعناء أفدح ما % % يقدح في العارفات والمنن % % 4(@)(@@) % فانفع أو امنع ولا تكن رجلا % ميعاده محنة من المحن % 5(@)(@@) % أولا فإني أرد قرضك والذ % % ذم جميعا عليك في رسن % 6(@)(@@) % ولا يراني الإله يملكني % % لا أحد هكذا بلا ثمن % % PageV01P4847 البحر : - 1(@)(@@) % ضربتها عنك صفحا بعدما لحقت % % إليك قدما قواف لا تعدينا % % 2(@)(@@) % إن الهجاء إذا ندت شوارده % % لا يرعوين لأصوات المهنينا % % PageV01P4848 البحر : - 1(@)(@@) % بخلت علي بجدوى سواك % وضاق به بطنك الأعكن % 2(@)(@@) % وحست بأمر تضمنته % % ومثلك خاس بما يضمن % 3(@)(@@) % ولم يخف عنى إذ كان ذاك % % بما دبر الثيتل الأقرن % % 4(@)(@@) % نصيبك ليس نصيبي بخس % % ت لو كنت تعقل أو تدهن % % 5(@)(@@) % تعاورتماني بكيد النساء % % فكيدا فكيدكما الأوهن % % 6(@)(@@) % سيرميكما بالذي فيكما % % لسان بحمدكما ألكن % 7(@)(@@) % أبا حسن إنها غيلة % كناصية الفجر بل أبين % % 8(@)(@@) % ولو كنت أرضيت تلك العجو % % ز عاملتني بالذي يحسن % 9(@)(@@) % ولكن أبى ذاك لي أنني % % عفيف أسر كما أعلن % 10(@)(@@) % فكدني أكدك ولا تألني % % ستعلم من كيده أمتن % % PageV01P4849 11(@)(@@) % وما ابن منين قتيل ثوى % % فسوف 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1156# يرى عرضه أمين % % 12(@)(@@) % هو ابن الشهيد الذي لا يثاب % % ثواب الشهادة بل يلعن % 13(@)(@@) % قتيل الزنا والخنا صبرة % بسيف الإمام فبئس الهن % 14(@)(@@) % علا ألف أنثى بلا حلها % % على أنه رجل محصن % % 15(@)(@@) % وأحسب أم ابنه بعضهن % ن بل لست أحسب بل أوقن % % 16(@)(@@) % وقدما علمت إذا ما علمت % % من جوهر المرء ما المعدن % % PageV01P4850 البحر : - 1(@)(@@) % ألا خذها إليك عن الحرون % تناسخها القرون عن القرون % 2(@)(@@) % أبا فسوى لقد دانيت منا % % غريما لا يماطل بالديون % % 3(@)(@@) % أتاني عنك أنك نلت مني % % ولست على المودة بالأمين % % 4(@)(@@) % عساك أمنت بادرتي وصدي % % لما أغلقت بيتك من رهون % 5(@)(@@) % غررت وأطعمتك ظنون كذب % % وأضعف عصمة عصم الظنون % 6(@)(@@) % أفاطم آذني بالصرم مني % % كما انقطع القرين من القرين % 7(@)(@@) % أرى لأبيك إدلالا وعرضي % % أعزعلي مرزأة فبيني % % 8(@)(@@) % فلست أراك قيمة كظم غيظي % % ولا عرضي من العرض الثمين % % 9(@)(@@) % سيكفيني مكانك وصل أخرى % % وأبطش غير مثني اليمين % 10(@)(@@) % هبيني كنت أهضم فيك عرضي % % أأهضم ضلة عرضي وديني % % PageV01P4851 البحر : - 1(@)(@@) % أقول لراجي خالد إذ رأيته % % وقد ضل في تلك المخازي وقد ونى % % 2(@)(@@) % ليكفيك ما قد قيل مما تقوله % % فلا تك ممن يعنه الله بالعنا % % 3(@)(@@) % بلى سمه أوسم من ضم رحله % وحسبك بالأسماء تكفي وبالكنى % % 4(@)(@@) % متى أطعمتك النفس في سبق خالد % بمعنى بديع ليس فيه من الخنا % % 5(@)(@@) % فإنك يا مغرور فيما رجوته % كمن يرتجي سبق المقادير بالمنى % % 6(@)(@@) % له نسوة لو ملك الليل أمره % لأوشك عنهن الزوال وما ثنا % % 7(@)(@@) % إذا دفعت أيدي الزناة بسحرة % رفعن لمرتاد الزنا أرجل الزنا % % PageV01P4852 البحر : - 1(@)(@@) % من قال يوما خالد % فليبد حينئذ بلعنه % 2(@)(@@) % رجل يطيب عرسه % % لتزور ناكتها بإذنه % % 3(@)(@@) % لا بمال ولا بفضل جمال % بل بجد وحظو في الزواني % % 3(@)(@@) % فكأن بعض الأنبيافعلاه قرن شك مابين السماء وبين أذنه خفيفايها الشاتمي في كل حين يتحدونني وكل أوان أنتم معشر غررتم بأيريوجهلتم من القوافي مكاني أنا الشيخ أنيك أم مهاجييوأفري أديمه بلساني لست أنفك نائكا حين أهجى من هجاني وأمه % ء دعا له بشباب قرنه % % 3(@)(@@) % فعلاه قرن شك ما % % بين السماء وبين أذنه % % 3(@)(@@) % خفيف ايها الشاتمي في كل حين % يتحدونني وكل 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1157# أوان % 3(@)(@@) % أنتم معشر غررتم بأيري % % وجهلتم من القوافي مكاني % % 3(@)(@@) % أنا الشيخ أنيك أم مهاجي % يوأفري أديمه بلساني % % 3(@)(@@) % أم من شئت من أعاي طهر % % أمتطيه بقدرة الشيطان % % 3(@)(@@) % فاعذروني فإنما أنا شيخ % % أفتدي بالزنا من البهتان % % PageV01P4853 3(@)(@@) % ولقد أخلق الزمان شبابي % % غير أيري فإنه كالسنان % % 3(@)(@@) % فمن ارتاب تمارى بقولي % % من عدو فشأنه وامتحاني % % 3(@)(@@) % سائلا خالدا بأنباء أيري % % وأبا يوسف فقد مارساني % % 3(@)(@@) % نكت أميهما وما زلت قدما % % بالأعادي مظفر الجرذان % % 3(@)(@@) % غير أني امرؤ وإن كنت شيخا % ليس ينفك شاعر قد هجاني % % 3(@)(@@) % فإذا ما شتمت أم مهاج % لم أنكها خشيت قف حصان % % 3(@)(@@) % فأرى أن أنيكها ثم أرمي % % ها بما قد شهدته بالعيان % % 3(@)(@@) % لست أنفك نائكا حين أهجى % % من هجاني وأمه في مكان % % PageV01P4854 البحر : - 1(@)(@@) % ياقحطبي كما يقال وربما % % رمي البريء بأعظم البهتان % 2(@)(@@) % أيقود قحطبة الجيوش مسوما % % بالخافقين كحوم العقبان % % 3(@)(@@) % باتت تشاولهم برجلي سمحة % تنسي المطاعن جذل كل طعان % % 3(@)(@@) % يا رب أضياف جعات قراهم % سمانة ليست من السمان % % 3(@)(@@) % وتقود عرسك للزناة مسوما يا رب أضياف جعات قراهمسمانة ليست من السمان باتت تشاولهم برجلي سمحة تنسي المطاعن جذل كل طعان % % بالقرن معترفا بكل هوان % % 4(@)(@@) % ألا اتعظت وقد رأيت مواسمي % % هيهات ثقل رأسك القرنان % % 5(@)(@@) % ولقد رأيت من الرجال معاشرا % ثقلت رؤوسهم بلا تيجان % % 6(@)(@@) % كم آمن مني العرام تركته % لا يستظل الدهر ظل أمان % % 7(@)(@@) % أصحبته في ليله ونهاره % خوفا يؤرق مقلة الوسنان % % 8(@)(@@) % أشعرته خوفا يصورني له % % صورا ممثلة بكل مكان % % PageV01P4855 9(@)(@@) % قد قلت إذ قالوا هجاك تعجبا % % أنى تفرغ خالد فهجاني % % 10(@)(@@) % ما كنت أحسب أن في خطراته % % وهمومه فضلا عن الجرذان % % 11(@)(@@) % حتى أتاني بالمغيب هجاؤه % % فعلمت أني عنده بمكان % % 12(@)(@@) % كم خطبت ألي أيري جاهدا % حتى إذا أعيا خطبت لساني % % PageV01P4856 البحر : - 1(@)(@@) % لله كلب مر بي فخسأته % % والكلب معترف بكل هوان % 2(@)(@@) % فأجابني مستنكفا أتقول لي % % اخسأ وأنت وخالد أخوان % % 3(@)(@@) % يكفيك أنك صنوه من آدم % % وشريكه في صورة الإنسان % % 4(@)(@@) % وعساه أيضا من أبيك لأمه % % فيها تصيب فياشل الشبان % % PageV01P4857 البحر : - 1(@)(@@) % قالوا هجاك أبو حفص فقلت لهم % % أخي وخلي وندماني وصفعاني % % 2(@)(@@) % عرضي له الدهر يهجوني وأصفعه 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1158# % وإن أبى زدته أعراض إخواني % % PageV01P4858 البحر : - 1(@)(@@) % للحريثي نكهة % تترك البيت منتنا % % 2(@)(@@) % تصرع الفارس الشجا % % ع إذا كر أو ونى % % 3(@)(@@) % إنما تحسن في كني % % ف إذا كان عندنا % % PageV01P4859 البحر : - 1(@)(@@) % إبليس إن كنت من المنظرين % وكنت لا تهلك في الهالكين % 2(@)(@@) % هذا أبو حسان سيف الردى % % كلمه إن كنت من الصادقين % % 3(@)(@@) % غير أن بردها يطيب وما أن % % فيك طيب بك فيك داء دفين % 3(@)(@@) % لك في هنك خصلتان من الجن % نة برد كبردهاوصحون % % 3(@)(@@) % لا ترومي بنيكك ذلك شيء % لم يكن مثله وليس يكون % 3(@)(@@) % ليس لي دين يونس فأرجي % % نجوة بعد أن تفيء النون % % 3(@)(@@) % أنا من أفحل البرية إلا % % أنني عنك مخفر عنين % % 3(@)(@@) % خفيف قل لمن عنك أخرتها المنون % ليس يجري في بحركم لي سفين % 3(@)(@@) % ويشفي غليل استه بالمني % ورب شفاء بماء مهين % % 3(@)(@@) % يقلقل أحشاءه باركا % بعرد طويل غليظ متين % % PageV01P4860 3(@)(@@) % وشيخ يبيت غلام له % % ينعمه بنعيم مهين % 3(@)(@@) % والله لو راجعته لفظة % ما رمت أو يقطع منك الوتين % % PageV01P4861 البحر : - 1(@)(@@) % مهما يكن للقيان زينا % فصبوة عودة القيان % 2(@)(@@) % تبكي لوقت انصراف بيض % يحسن في الضرب والأغاني % % 3(@)(@@) % فإن تغنت لنا وددنا % % لو هي قامت عن المكان % 4(@)(@@) % قلت لها والكلام شيء % يبدو لمستخرج المعاني % % 5(@)(@@) % ليست من النار فيك شيء % لكن من الخلد خلتان % % PageV01P4862 البحر : - 1(@)(@@) % أنتما عندي يا بني رمضان % يشهد الرحمن ذاكم أحمقان % 2(@)(@@) % يابني القرفة والتربذ والجن % د بيد ستر والشب اليماني % % PageV01P4863 البحر : - 1(@)(@@) % رأيت الناس أكرمهم عليه % ذوو الأجسام والصور الحسان % 2(@)(@@) % يروعهم الطرير إذا رأوه % كأنهم نساؤهم الزواني % % PageV01P4864 البحر : - 1(@)(@@) % كفي ملامك قد ملكت عناني % % وحفظت فيك نصيحة الندمان % 2(@)(@@) % أأغيب عنك فتنعمين برقدة % لا خير بعدك في حبيب ثاني % % 3(@)(@@) % هلا وفيت بما وعدت كما وفى % % لك من وطئت به على الإحسان % % 4(@)(@@) % إن كان صافح للكرى لي ناظرا % طيف فلا عمرت به أجفاني % % 5(@)(@@) % حسبي من العيش الذي خولته % % في ظل وصلكم وطيب زماني % % 6(@)(@@) % شربي الكؤوس على منادمة الصبى % % وغناء من إن شئته غناني % % 7(@)(@@) % لمن الديار ببرقة الروحان إذ % لا نبيع زماننا بزمان % % PageV01P4865 البحر : - 1(@)(@@) % قل يا أبا حسن لا زلت في منن % يا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1159# ماليء القلب والأذنين إحسانا % % 2(@)(@@) % تدير صوتا لنا ما زال مقترحا % أبقى بقلبي أطرابا وأشجانا % % 3(@)(@@) % يا حبذا جبل الريان من جبل % وحبذا ساكن الريان من كانا % % 4(@)(@@) % ولن تراني إلا حاملا قدحا % وشاربا وعليه منه سكرانا % % PageV01P4866 البحر : - 1(@)(@@) % شمس مكونة في خلق جارية % باتت تدير بعيد الدنح قربانا % % 2(@)(@@) % أبصرتها بين أتراب هززن على % % عقد الزنابير بالكثبان أغصانا % % 3(@)(@@) % يحملن وهي تهادى بينهم حذرا % للعين من فاخر الياقوت صلبانا % % 4(@)(@@) % لو يستطعن من الإشفاق إذ برزت % للمشي أوطأتها منهن أجفانا % % 5(@)(@@) % كيف الطريق إلى الطير المشوم وقد % % أذاقنا تعبا منه وعنانا % % 6(@)(@@) % فقلت لا علم لي فاستضحكت شجنا % وضمن القلب منها في أشجانا % % 7(@)(@@) % فيا لهن بدورا لا شبيه لها % % وأوجها أشرقت حسنا وألوانا % % 8(@)(@@) % ويا لها نظرة نلت النعيم بها % % والحب فالتذت العينان من كانا % % PageV01P4867 البحر : - 1(@)(@@) % لم يبق لي صبر ولكنما % % أبقى بقلبي البين أشجانا % % 2(@)(@@) % أبدلتني بعدا بقرب الذي % % قد كان من حزني سلوانا % % 3(@)(@@) % وكان لي أنسا لدى وحشتي % % وكان لي روحا وريحانا % % 4(@)(@@) % يا بدر ما أسرع ما رابني % % في وصلك الدهر وما خانا % % 5(@)(@@) % غبت فغاب النوم عن ناظري % % وسامني طيفك هجرانا % % 6(@)(@@) % كانت بك الدنيا لنا جنة % فنغصت لذة دنيانا % % PageV01P4868 البحر : - 1(@)(@@) % مسقم عن سقم جفن % ضاحك عن حب مزن % 2(@)(@@) % مطلع من جيبه شم % سا بدت في يوم دجن % % 3(@)(@@) % لائث مئزره فو % ق كثيب تحت غصن % % 4(@)(@@) % رشأ قد جاوز الحس % ن به حد التمني % % 5(@)(@@) % آدمي غير أن ال % خلق في صورة جني % % 6(@)(@@) % مؤنسي في كل حال % مسعدي في كل فن % 7(@)(@@) % ملكت كفاي منه % % مثل ما ملك مني % % 8(@)(@@) % لست عنه صابرا يو % % ما ولا يصبر عني % % PageV01P4869 البحر : - 1(@)(@@) % ولما رأيت البين قد جد جده % % وقد قرنت للبين عشر سفائن % 2(@)(@@) % أماطت رداء الخز عن حر وجهها % % ولم تخش من داياتها والحواضن % PageV01P4870 البحر : - 1(@)(@@) % م ولع الزمان بأن يحرك ساكنا % وبأن يثير من الأوابد كامنا % % 2(@)(@@) % وهم الأحبة من أقام ترحلوا % % عنه فكلهم يودع ظاعنا % % 3(@)(@@) % أضحى الزمان مدائنا لك فيهم % ولعل رشدا إن قضيت مدائناص ولع الزمان بأن يحرك ساكنا % 4(@)(@@) % وبأن يثير من الأوابد كامنا % % وهم 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1160# الأحبة من أقام ترحلوا % % 5(@)(@@) % عنه فكلهم يودع ظاعنا % % أضحى الزمان مدائنا لك فيهم % 6(@)(@@) % ولعل رشدا إن قضيت مدائنا % % فأرى الليالي ما نقضن معاهدا % 7(@)(@@) % فيما أتين ولا هجمن مآمنا % % رحلن إلفك عن مساكن قلعة % 8(@)(@@) % كانت لقوم آخرين مساكنا % % فاقن الحياء أبا الحسين فلم يكن % % 9(@)(@@) % شيء فري لم تخله كائنا % % كان الذي قد كنت توقن أنه % % 10(@)(@@) % سيكون فاجزع واقنا لا واهنا % % هون عليك المقطعات ولا تكن % % PageV01P4871 11(@)(@@) % بنصيحة من مخلص متهاونا % % إن الحوادث قد عدون فواجعا % 12(@)(@@) % فاشدد إزارك لا يكن فواتنا % % لا تنكرن من المصائب منا أتى % % 13(@)(@@) % حتى كأنك كنت منها آمنا % % أنكره إنكار امرىء عرف الردى % % 14(@)(@@) % ورأى النفوس بأن يمتن رهائنا % % إني نكرت على الليالي أن أتت % 15(@)(@@) % ما قد أتته لم يكن ظنائنا % % هل كنت غرا بالنوائب قبلها % % 16(@)(@@) % أم خلتهن لما تحب ضوامنا % % بل كنت فيما قد لقيت مفكرا % % 17(@)(@@) % حتى كأنك كنت ثم معاينا % % فعلام تنفر نفرة وحشية % 18(@)(@@) % وتعد دهرك غائلا لك خائنا % % ماخان دهر مؤذن بصروفه % 19(@)(@@) % ما انفك يرسل بالمواعظ آذنا % % طامن حشاك أخا البقاء لدائه % 20(@)(@@) % فلتزجرن أشائما وأيامنا % % داء البقاء الرفء إما عاجلا % PageV01P4872 21(@)(@@) % لا زلت توفاه وإما آينا % % من عاش أثكله الزمان خليله % 22(@)(@@) % وسقاه بعد الصفو رنقا آجنا % % وكذا شرب العيش فيه تلون % 23(@)(@@) % بيناه عذب إذ تحول آسنا % % والمرء ماعدت الحوادث نفسه % 24(@)(@@) % يلقي الزمان محاربا ومهادنا % % دار الزمان بليله ونهاره % 25(@)(@@) % فأدار أرحاء المنون طواحنا % % فتأمل الدنيا ولاتعجب لها % % 26(@)(@@) % واعجب لمن أضحى إليها راكنا % % قضى أبو العباس خلك نحبه % 27(@)(@@) % فجعلت نحبك دمعك المتهاتنا % % وودت أنك منه أول لاحق % % 28(@)(@@) % أوكنت مضمونا إليه مقارنا % % لكن أبى ذاك الإله فلا ترد % 29(@)(@@) % مالم يرد لقضائه وارض العزاء مخادنا % % لاتسجنن الهم عندك إنه % % 30(@)(@@) % مازال مسجونا يعذب ساجنا % % واصبر كما أمر المليك فإنما % % PageV01P4873 31(@)(@@) % يهدي المدين إذا أطاع الدائنا % % والله يمنحك الخلود مجاورا % 32(@)(@@) % أخيك في جناته ومساكنا % % من بعد أن تحيا حياة ممتع % % 33(@)(@@) % لا كالمشيع علو بين ظعائنا % % مامات خلك يوم زار ضريحه % % 34(@)(@@) % بل يوم زار قوابلا وحواضنا % % بل منذ أودع من أبيه وأمه % 35(@)(@@) % مستودعيه فكن لذلك فاطنا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1161# % % بل قد يمت دون الألى فوق الثرى % % 36(@)(@@) % نطق البيان مكاتبا وملاسنا % % مازال خلك ميتا ولميت % 37(@)(@@) % في الميتين مصاهرا ومخاتنا % % مات الخلائق مذ نعاهم ربهم % % 38(@)(@@) % بل مذ رأت عين قرينا بائنا % % أفللتقدم والتأخر يمتري % % 39(@)(@@) % عينيك أسراب الدموع هواتنا % % ساق الخليل إلى الخليل فناؤه % % 40(@)(@@) % ليكون مدفونا له أو دافنا % % ولربما اختطفا جميعا خطفة % PageV01P4874 41(@)(@@) % والدهر أخطف ماتراه محاجنا % % ولما جلوت صفاح قلبك واعظا % % 42(@)(@@) % إني رأيت عليه رينا رائنا % % لكنه التذكير يهديه الفتى % % 43(@)(@@) % لأخيه حين يرى أساه راحنا % % ولئن عبأت لك الأسى لعلى امرئ % 44(@)(@@) % أمسى الحزين عليه لا المتحازنا % % ولئن أمرتك بالتجلد ظاهرا % 45(@)(@@) % لقد امتلأت عليه شجوا باطنا % % ولقد أقول غداة قام نعيه % % 46(@)(@@) % هيجت لي شجنا لعمرك شاجنا % % صفن الجواد وقد يطول جراؤه % % 47(@)(@@) % ولتسمعن بكل جار صافنا % % وطوى العتيق جناحه في وكنه % % 48(@)(@@) % وقصار ذي الطيران يلقى واكنا % % والحي يرتع ثم يسرع برهة % 49(@)(@@) % فإذا قضى أربيه أمسى عاطنا % % مات الذي نال العلا متناولا % % 50(@)(@@) % من بعد مانال العلا متطامنا % % مات الذي كان النصيح مساترا % PageV01P4875 51(@)(@@) % مات الذي كان النصير معالنا % % مات الذي فتح الفتوح ملاينا % 52(@)(@@) % لاعاجزا عن فتحهن مخاشنان ولع الزمان بأن يحرك ساكنا % وبأن يثير من الأوابد كامنا % % 53(@)(@@) % وهم الأحبة من أقام ترحلوا % % عنه فكلهم يودع ظاعنا % % 54(@)(@@) % أضحى الزمان مدائنا لك فيهم % ولعل رشدا إن قضيت مدائنا % % 55(@)(@@) % فأرى الليالي ما نقضن معاهدا % فيما أتين ولا هجمن مآمنا % % 56(@)(@@) % رحلن إلفك عن مساكن قلعة % كانت لقوم آخرين مساكنا % % 57(@)(@@) % فاقن الحياء أبا الحسين فلم يكن % % شيء فري لم تخله كائنا % % 58(@)(@@) % كان الذي قد كنت توقن أنه % % سيكون فاجزع واقنا لا واهنا % % 59(@)(@@) % هون عليك المقطعات ولا تكن % % بنصيحة من مخلص متهاونا % % 60(@)(@@) % إن الحوادث قد عدون فواجعا % فاشدد إزارك لا يكن فواتنا % % PageV01P4876 61(@)(@@) % لا تنكرن من المصائب منا أتى % % حتى كأنك كنت منها آمنا % % 62(@)(@@) % أنكره إنكار امرىء عرف الردى % % ورأى النفوس بأن يمتن رهائنا % % 63(@)(@@) % إني نكرت على الليالي أن أتت % ما قد أتته لم يكن ظنائنا % % 64(@)(@@) % هل كنت غرا بالنوائب قبلها % % أم خلتهن لما تحب ضوامنا % % 65(@)(@@) % بل كنت فيما قد لقيت مفكرا 
urn:cts:arabLit:0283IbnRumi.Diwan.JK007589-ara1:ms1162# % % حتى كأنك كنت ثم معاينا % % 66(@)(@@) % فعلام تنفر نفرة وحشية % وتعد دهرك غائلا لك خائنا % % 67(@)(@@) % ماخان دهر مؤذن بصروفه % ما انفك يرسل بالمواعظ آذنا % % 68(@)(@@) % طامن حشاك أخا البقاء لدائه % فلتزجرن أشائما وأيامنا % % 69(@)(@@) % داء البقاء الرفء إما عاجلا % لا زلت توفاه وإما آينا % % 70(@)(@@) % من عاش أثكله الزمان خليله % وسقاه بعد الصفو رنقا آجنا % % PageV01P4877 71(@)(@@) % وكذا شرب العيش فيه تلون % بيناه عذب إذ تحول آسنا % % 72(@)(@@) % والمرء ماعدت الحوادث نفسه % يلقي الزمان محاربا ومهادنا % % 73(@)(@@) % دار الزمان بليله ونهاره % فأدار أرحاء المنون طواحنا % % 74(@)(@@) % فتأمل الدنيا ولاتعجب لها % % واعجب لمن أضحى إليها راكنا % % 75(@)(@@) % قضى أبو العباس خلك نحبه % فجعلت نحبك دمعك المتهاتنا % % 76(@)(@@) % وودت أنك منه أول لاحق % % أوكنت مضمونا إليه مقارنا % % 77(@)(@@) % لكن أبى ذاك الإله فلا ترد % مالم يرد لقضائه وارض العزاء مخادنا % % 78(@)(@@) % لاتسجنن الهم عندك إنه % % مازال مسجونا يعذب ساجنا % % 79(@)(@@) % واصبر كما أمر المليك فإنما % % يهدي المدين إذا أطاع الدائنا % % 80(@)(@@) % والله يمنحك الخلود مجاورا % أخيك في جناته ومساكنا % % PageV01P4878 81(@)(@@) % من بعد أن تحيا حياة ممتع % % لا كالمشيع علو بين ظعائنا % % 82(@)(@@) % مامات خلك يوم زار ضريحه % % بل يوم زار قوابلا وحواضنا % % 83(@)(@@) % بل منذ أودع من أبيه وأمه % مستودعيه فكن لذلك فاطنا % % 84(@)(@@) % بل قد يمت دون الألى فوق الثرى % % نطق البيان مكاتبا وملاسنا % % 85(@)(@@) % مازال خلك ميتا ولميت % في الميتين مصاهرا ومخاتنا % % 86(@)(@@) % مات الخلائق مذ نعاهم ربهم % % بل مذ رأت عين قرينا بائنا % % 87(@)(@@) % أفللتقدم والتأخر يمتري % % عينيك أسراب الدموع هواتنا % % 88(@)(@@) % ساق الخليل إلى الخليل فناؤه % % ليكون مدفونا له أو دافنا % % 89(@)(@@) % ولربما اختطفا جميعا خطفة % والدهر أخطف ماتراه محاجنا % % 90(@)(@@) % ولما جلوت صفاح قلبك واعظا % % إني رأيت عليه رينا رائنا % % PageV01P4879 91(@)(@@) % لكنه التذكير يهديه الفتى % % لأخيه حين يرى أساه راحنا % % 92(@)(@@) % ولئن عبأت لك الأسى لعلى امرئ % أمسى الحزين عليه لا المتحازنا % % 93(@)(@@) % ولئن أمرتك بالتجلد ظاهرا % لقد امتلأت عليه شجوا باطنا % % 94(@)(@@) % ولقد أقول غداة قام نعيه % % هيجت لي شجنا لعمرك شاجنا % % 95(@)(@@) % صفن الجواد وقد يطول جراؤه % % ولتسمعن بكل جار صافنا % % 96(@)(@@) % وطوى العتيق جناحه في وكنه % % وقصار ذي الطيران يلقى واكنا % % 97(@)(@@) % والحي يرتع ثم يسرع 
