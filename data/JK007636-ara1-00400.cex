urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms201# هو مثر لا يجود حري % % PageV01P1037 البحر : - 1(@)(@@) % لا عيب في بر مولانا العميم سوى % % أن ليس يكتم عن ساريه آثار % % 2(@)(@@) % و ليس يكتم والكانون مرتفع % % كأنه علم في رأسه نار % % PageV01P1038 البحر : - 1(@)(@@) % رب دوح باكرته عزمتي % % ونديمي بعدج أحبابي ادكار % % 2(@)(@@) % فاذا أعملت فيه قدحا % شبب الوصف وغناني الهزار % % PageV01P1039 البحر : - 1(@)(@@) % عن خده منع الرقيب % % وبعده داجي عذاره % % 2(@)(@@) % واها لها من جنة % % جفت بأنواع المكاره % % PageV01P1040 البحر : - 1(@)(@@) % و قائل لي عند ما عدت إلى % % قاضي القضاة بعد طول مسرى % % 2(@)(@@) % اهد له مدحا جميلا ودعا % قلت نعم كلاهما وتمرا % % PageV01P1041 البحر : - 1(@)(@@) % تهن بمنزليك وجر ذيلي % % سعودك فيهما خبرا وخبرا % % 2(@)(@@) % فمن دار السعادة كل يوم % % إلى دار الهنا وهلم جرا % % PageV01P1042 البحر : - 1(@)(@@) % يا حبذا الظبي الذي % % قد كان يعتمد النفارا % % 2(@)(@@) % عانيت صوغ صفاته % % فجعلت خاتمه سوارا % % PageV01P1043 البحر : - 1(@)(@@) % يا سيدي لا برحت ذا نعم % % كل ثنى عن وصفها قاصر % % 2(@)(@@) % من لم تكن في الزمان ملجأه % % فما له قوة ولا ناصر % % PageV01P1044 البحر : - 1(@)(@@) % سأشكر نعماك التي من أقلها % % قطائف من قطر النبات لها بحر % % 2(@)(@@) % أمد لها كفي فيهتز فرحة % % كما انتفض العصفور بلله القطر % % PageV01P1045 البحر : - 1(@)(@@) % أسرت إلى سمعي غداة ترحلت % % حديثا إلى حفظ العهود يشير % % 2(@)(@@) % و هيج عندي قرب خدي لخدها % % بكى فتلاقى روضة وغدير % % PageV01P1046 البحر : - 1(@)(@@) % أصبح شمس العلا فريدا % في صنعتيه بغير نكر % % 2(@)(@@) % علم كلام وعلم نحو % فما ابن بحر وما ابن بري % % PageV01P1047 البحر : - 1(@)(@@) % سيدي عش ابدا في أنعم % % أنا منها في حمى عيش نضير % % 2(@)(@@) % لست يا ابن اليأس مما ارتجى % % بعد ما قربتني يا ابن الخضير % % PageV01P1048 البحر : - 1(@)(@@) % شكرا لعلياك التي أورثتها % % يا ابن السيادة كابرا عن كابر % % 2(@)(@@) % قلبي جبرت وحالتي تبغي الغنى % % حتى يقال روى صنيعي جابر % % 3(@)(@@) % سيدي قابل سناها سنة % % بالتهاني والعلى والاقتدار % % 4(@)(@@) % ان تكن ستا كما قد أرخوا % % فلها في أنجم السعد جوار % % 5(@)(@@) % من مبلغ الادباء أن يدي % % ظفرت بوافي الود موفور % % 6(@)(@@) % و وجدت في أفق البيان هدى % % لما نزلت بجانب الطور % % 7(@)(@@) % يا لائمي في خادم لي سيد % قسما لقد زدت السلو نفورا % % 8(@)(@@) % و لقد أدرت على المسامع 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms202# قهوة % في الحب كان مزاجها كافورا % % 9(@)(@@) % هنئت صومك ترتجي أو تختشي % % من قاصد أو حاسد مغرور % % 10(@)(@@) % هذا تفطره من الأفطار أو % % هذا تفطره من التفطير % % PageV01P1049 11(@)(@@) % أمولاي عز الدين جوزيت صالحا % عن القوم نالوا من حباك حبورا % % 12(@)(@@) % فلولاك في شهر الصيام لما رأوا يخفي الضنا جسمي اذا أبصرت عني شعور الغيد فوق الظهور % % سوى في سماء الإصطبار فطوراسقط بيت ص % % 13(@)(@@) % لفهمك الغفلة يا عاذلي % % عما أعاني ولفهمي الشعور % % 14(@)(@@) % و تاجر قلت له اذ رنا % % رفقا بقلب صبره حائر % % 15(@)(@@) % و مقلة تنهب طيب الكرى % % منها على عينك يا تاجر % % 16(@)(@@) % سال العذار بعنبر متأرج % % وأتت محاسن وجهه في عسكر % % 17(@)(@@) % يا عاشقين يجادلون وشاتهم % % فتقت لكم ريح الجلاد بعنبر % % 18(@)(@@) % و إلى شهي الرشف وقتا وفي % % وقت له التحكيم والقهر % % 19(@)(@@) % لسانه في فمه قائل % % اليوم خمر وغدا أمر % % 20(@)(@@) % أشكو جفا غادة عراني % % من لوعة الصد ما عراها % % PageV01P1050 21(@)(@@) % ضنيت والدمع ملء جفني % % فلا تراني ولا أراها % % 22(@)(@@) % جرى دمع عيني فانثنى الحب مغضبا % وقال أراه في الهوى فاضحا سري % % 23(@)(@@) % و أقسم مالي في الهوى فرج سوى % % جفوني أدعوها ومهما جرى يجري % % 24(@)(@@) % أفدي التي فطرت قلبي لواحظها % % موافقا لمعاني حسنها النضر % % 25(@)(@@) % يا جفنها وكرى عيني فطرني % % من كان منكم مريضا أو على سفر % % 26(@)(@@) % يقول لي من لا درى حالتي % % أراك قد غبت عن العشره % % 27(@)(@@) % لعل مولانا بكس خلا % % قلت نعم كس أخت ما أكره % % 28(@)(@@) % من شؤم حظي أنني عاشق % % خائفة من أهلها نكرا % % 29(@)(@@) % ينفق أيري كلما حصلت % % يداي من برا إلى برا % % 30(@)(@@) % ماذا لقيت بمن أعشت روائحها % % عيني وضاق صبري ومصطبري % % PageV01P1051 31(@)(@@) % قست وقالت ترى حسني فقلت لها % % غطي هواك وما ألقى على بصري % % 32(@)(@@) % لقد كنت في لذات ثغرك هائما % ليالي لم يمنع على عاشق ثغر % % 33(@)(@@) % فأما وسر دونها من شوارب % % فلا خير في اللذات من دونها سر % 34(@)(@@) % يا سائلي عن حال عم % % ر وقد سقطت على الخبير % % 35(@)(@@) % نقش الفصوص أعاد صا % % حبنا على نقش الحصير % % 36(@)(@@) % أحلتموني بمعلومي على أمد % يوم القيامة أدنى منه للفكر % % 37(@)(@@) % فلست أدري وقد طال 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms203# الزمان به % % على الزكاة أحلتم أم على الحشر % % 38(@)(@@) % أشار علي الزين بالمرد لا النسا % % فخالفته حتى انقضى العمر في كدر % % 39(@)(@@) % فياليت أمي لم تلدني وليتني % % رجعت إلى القول الذي قاله عمر % % 40(@)(@@) % أتاني وأصحابي من الفجل وارد % % فقلت لهم النصيح ولا نكرا % % PageV01P1052 41(@)(@@) % خذوا حذركم من خارجي عذاره % % فقد جآء زحفا في كتيبته الخضرا % % 42(@)(@@) % اني لمن معشر قد ركضوا % % خيل اللقا بين زحاف وكرار % % 43(@)(@@) % قوم اذا حاربوا شدوا مآزرهم % % دون النساء ولو باتت بإطهار % % 44(@)(@@) % قبح الذين عن الجنوك تغافلوا % % وتشاغلوا بالكسب في الإسفار % % 45(@)(@@) % يستيقظون إلى نهيق حميرهم % % وتنام أعينهم عن الأوتار % % 46(@)(@@) % لله نظمك للطروس لقد % % نعمت به الالحاظ والفكر % % 47(@)(@@) % أوراق حظ كلها ثمر % % وبحور شعر كلها درر % % 48(@)(@@) % حظ توعرت المسالك نحوه % % فإذا جريت وراءه أتعثر % % 49(@)(@@) % و لقد يصبرني على ما ألتقي % % حال وها أنا كالقتيل مصبر % % 50(@)(@@) % قال لي القلب عد لمالكنا % % فانه جابر لما كسرا % % PageV01P1053 51(@)(@@) % سوف يرى رأيه الجميل ومن % % يكيدنا في حماه سوف يرى % % 52(@)(@@) % أودع مولانا على نية اللقا % % سريعا وعودي نحو احسانه الغمر % % 53(@)(@@) % فيمنحني بيتا على النهر حاصلا % وأمنحه خمسين بيتا على بحر % % 54(@)(@@) % إلى الله أشكو مدتي وتباعدي % % عن المنظر البدري أجلوبه الضرا % % 55(@)(@@) % كفى من عمى لحظي وحظي أنني % % اذا فتحت عيناي لا تبصر البدرا % % 56(@)(@@) % أف لعبد الدينار لو رضيت % % همته بالشقاء والفكر % % 57(@)(@@) % يا عابد الدرهم الخلاص افق % % فانما أنت عابد الحجر % % 58(@)(@@) % و كم دون ليلي من عقاب قطعتها % % شوامخ تضني كل سار وسائر % % 59(@)(@@) % محاجر أسعى فوقها سعي أدمعي % % وحق لليلى السعي فوق المحاجر % % 60(@)(@@) % هنئتموا آل الشهيد بنجمكم % % وبوجه مولود لكم ما أزهره % % PageV01P1054 61(@)(@@) % من قبل ما عملت لديه عقيقة % % عملت له المدح الجواري جوهره % % 62(@)(@@) % يقولون كرر وصف ماقد سمعته % % أذانا وتسبيحا من الفائق المصري % % 63(@)(@@) % فهل مثله في الصبح يسمع والعشا % % فقلت ولا والله أسمع في العصر % % 64(@)(@@) % و أزرق العين يمضي حد مقلته % % مثل السنان بقلب العاشق الحذر % % 65(@)(@@) % قالت صبابة مشغوف برزقتها % % دعها سماوية تمضي على قدر % % 66(@)(@@) % قل لمن بالغ في الفخر بما % % قد حواه من حطام قد تيسر % % 67(@)(@@) % أنت فخار 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms204# بدنياك ولا % % بد للفخار من أن يتكسر % % 68(@)(@@) % اذا كنتم لا تذكرون قضيتي % % وتأبون مني ساعة أن أذكرا % % 69(@)(@@) % فاني أرى حالي سيمسي لديكم % % ولكنه الحبال يمشي إلى ورا % % 70(@)(@@) % تصدى إلى إيري فقلت له اتئد % % وحقك لو أبصرته وهو ثائر % % PageV01P1055 71(@)(@@) % رأيت الذي لا كله أنت قادر % % عليه ولا عن بعضه أنت صابر % % 72(@)(@@) % دارت عذار فلان % % حتى غدا وهو حائر % % 73(@)(@@) % فياله حسن وجه % % دارت عليه الدوائر % % 74(@)(@@) % يا من يعللني بكأس مدامة % % عن وصل من همي به يتكاثر % % 75(@)(@@) % لون المدام كما تراه وإنما % % خد الذي أهواه لون آخر % % 76(@)(@@) % أفي كل يوم أنت حامل مدحة % إلى المجد غاد بالعطا المتواتر % % 77(@)(@@) % فياليت شعري والمطامع جمة % إلى م يراك المجد في زي شاعر % % 78(@)(@@) % حمى ثغرا بخال عنبري % % يقول وقد تزايد ضوع نشر % % 79(@)(@@) % أضاعوني وأي فتى أضاعوا % % ليوم كريهة وسداد ثغر % % 80(@)(@@) % مصرية تبدي التصامم ان روت % % لفظا لأن اللفظ منها سكر % % PageV01P1056 81(@)(@@) % يحلو اذا هي كررته وحسبكم % % بالسكر المصري حين يكرر % % 82(@)(@@) % سقى الغيث قبرا حله النجم والندى % % وفضل النهى والعلم والفضل والنثر % % 83(@)(@@) % كأن نبي العلياء يوم وفاته % % نجوم سماء خر من بينها البدر % % 84(@)(@@) % ان حرمت القليل من مال بيرو % % ت على فاقتي فليس كثيرا % % 85(@)(@@) % إن شيخ الشيوخ أيده الل % % ه رأى أنني أعيش فقيرا % % 86(@)(@@) % أفدي صحابا مذ عرفت ولاءهم % % عرف الرجاء مطالع التيسير % % 87(@)(@@) % أروي المروءة عنهم عن نافع % % والبر أرويه عن ابن كثير % % 88(@)(@@) % دعا ابني لمولانا بقلب ونية % دعاء أبيه صالحا وكثيرا % % 89(@)(@@) % و ألبسته من فاخر الصوف جبة % % ستعاض عنها جنة وحريرا % % 90(@)(@@) % لعمري لقد أملى ثمار علومه % % علينا واهداها الكبير المصدر % % PageV01P1057 91(@)(@@) % و قد كان يملي مثلها ابن وكيلها % % ولكن هذا الصدر أملي وأكبر % % 92(@)(@@) % بروحي بهي الوجنتين شهيها % مروع لإقبال العذار صبور % % 93(@)(@@) % يخاف حواليها عوارض تلتقي % % ويعلم أن الدائرات تدور % % 94(@)(@@) % و قوم يخافون مس الهجاء % % وقد سلكوا فيه طرق الغرر % % 95(@)(@@) % يقولون لي لا تقع فيهم % فقولوا لهم لا تكونوا حفر % % 96(@)(@@) % أنظر إلى الدهر الذي ساق الورى % % خبرا بأقطار البلاد ومخبرا % % 97(@)(@@) % رقمت ثياب غصونه إبر الحيا % % والرقم أحسن ما يكون مزهرا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms205# % % 98(@)(@@) % قد أمكنت فرص اللذات فانتهز % % وسامحتك وعود الدهر فانتجز % % 99(@)(@@) % روض يزف ومعشوق وكاس طلا % % لقد ظفرت بعيش غير ذي عوز % % 100(@)(@@) % أما ترى الراح يهدي صفو مزنتها % % غيم الزجاج إلى أرض الحشا الجرز % % PageV01P1058 101(@)(@@) % وحامل الكاس قد جاز الغرام به % % قلبي ولولا فتاوى الحب لم يجز % % 102(@)(@@) % خمري ثغر فما نفس بصاحبة % تبري خد فما دمع بمكتنز % % 103(@)(@@) % اذا خطا نفحت أعطافه أرجا % نفح الثناء عليكم يا بني اللكز % % 104(@)(@@) % أنتم أناس اذا أجرى الورى نسبا % للجود عد إلى أيديكم وعزي % % 105(@)(@@) % نعم المفيدون للطلاب ما سألوا % % والآخذون من الهلاك بالحجز % % 106(@)(@@) % والجاعلون معاني المجد واضحة % % بين الأنام وكان المجد كاللغز % % 107(@)(@@) % لم يبق بين بني الدنيا وبينكم % إلا مشابه بين الدر والخرز % % 108(@)(@@) % دل العلاء على ايضاح سؤددكم % % دلالة القبس الموفي على نشز % % 109(@)(@@) % ذو الجود والبأس من يعرض لسطوته % % يهلك ومن يرج نعمى كفه يفز % % 110(@)(@@) % وشائد البيت لاحق بمطرح % % للقاصدين ولا وفر بمكتنز % % PageV01P1059 111(@)(@@) % أما الندى فندى غر نخادعه % % والعزم عزم سديد الرأي محترز % % 112(@)(@@) % جدوى على أثر جدوى غير قاصرة % كالسيل محتفز في اثر محتفز % % 113(@)(@@) % لو نازعته بيوت الأولين على % لصير الصدر منها موضع العجز % % 114(@)(@@) % غزا إلى الجيش منصور اللوا ودنا % % جيش السؤال إلى أمواله فغزي % % 115(@)(@@) % يا ماجدا نال من حمد ومن شرف % % ما لم تنل آل حمدان ولم تحز % % 116(@)(@@) % تقاصر الشعر عن علياك من خجل % % حتى البسيط تماما آخر الرجز % % 117(@)(@@) % وما وفتك لطول المسهبات ثنا % % فكيف نبغي وفاء الوعد بالوجز % % PageV01P1060 البحر : - 1(@)(@@) % شكرا لعلياك التي أورثتها % % يا ابن السيادة كابرا عن كابرزيادة من % % 2(@)(@@) % قلبي جبرت وحالتي تبغي الغنى % % حتى يقال روى صنيعي جابر % % PageV01P1061 البحر : - 1(@)(@@) % سيدي قابل سناها سنة % % بالتهاني والعلى والاقتدار % % 2(@)(@@) % ان تكن ستا كما قد أرخوا % % فلها في أنجم السعد جوار % % PageV01P1062 البحر : - 1(@)(@@) % من مبلغ الادباء أن يدي % % ظفرت بوافي الود موفور % % 2(@)(@@) % و وجدت في أفق البيان هدى % % لما نزلت بجانب الطور % % PageV01P1063 البحر : - 1(@)(@@) % يا لائمي في خادم لي سيد % قسما لقد زدت السلو نفورا % % 2(@)(@@) % و لقد أدرت على المسامع قهوة % في الحب كان مزاجها كافورا % % PageV01P1064 البحر : - 1(@)(@@) % هنثت صومك ترتجي 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms206# أو تختشي % % من قاصد أو حاسد مغرور % % 2(@)(@@) % هذا تفطره من الأفطار أو % % هذا تفطره من التفطير % % PageV01P1065 البحر : - 1(@)(@@) % أمولاي عز الدين جوزيت صالحا % عن القوم نالوا من حباك حبورا % % 2(@)(@@) % فلولاك في شهر الصيام لما رأوا % % سوى في سماء الإصطبار فطورا % % PageV01P1066 البحر : - 1(@)(@@) % يخفي الضنا جسمي إذا أبصرت % % عني شعور الغيد فوق الظهور % % 2(@)(@@) % لفهمك الغفلة يا عاذلي % % عما أعاني ولفهمي الشعور % % PageV01P1067 البحر : - 1(@)(@@) % و تاجر قلت له اذ رنا % % رفقا بقلب صبره حائر % % 2(@)(@@) % و مقلة تنهب طيب الكرى % % منها على عينك يا تاجر % % PageV01P1068 البحر : - 1(@)(@@) % سال العذار بعنبر متأرج % % وأتت محاسن وجهه في عسكر % % 2(@)(@@) % يا عاشقين يجادلون وشاتهم % % فتقت لكم ريح الجلاد بعنبر % % PageV01P1069 البحر : - 1(@)(@@) % و إلى شهي الرشف وقتا وفي % % وقت له التحكيم والقهر % % 2(@)(@@) % لسانه في فمه قائل % % اليوم خمر وغدا أمر % % PageV01P1070 البحر : - 1(@)(@@) % رشقتني من اللحاظ بغمزه % % وتثنت كصعدة مهتزه % % 2(@)(@@) % غادة عقربت على الخد صدغا % من عيون الأنام يحرس كنزه % % 3(@)(@@) % يا لغيداء حسنها بقطع القل % % ب وطرفي هو الذي حاز حرزه % % 4(@)(@@) % تتمشى في سفح جلق وهنا % فيكاد الشذا يفوح بغزه % % 5(@)(@@) % أنا في حبها كثير عشق % وقليل لنعلها خد عزه % % 6(@)(@@) % لي من خدها ومن مرشفيها % % ولماها نقل وراح ومنزه % % 7(@)(@@) % كيف لي بالخلاص فيها من الح % % ب وقلبي من صدغها تحت رزه % % 8(@)(@@) % كم لحالي بها خضوع وذل % وبنعمى موسى اعتلاء وعزه % % 9(@)(@@) % سيد ما أمد شقة عليا % % ه على المعتفي وأرفع بزه % % 10(@)(@@) % ألبسته آباؤه ثوب مجد % فغدا بالجلال يرقم طرزه % % PageV01P1071 11(@)(@@) % صاحب وهو للنضار عدو % كل يوم يقضي عليه بوكزه % % 12(@)(@@) % في الندى حاتم وفي الرأي عمرو % % و التقاضي قيس وفي البأس حمزه % % 13(@)(@@) % كاد يوم الندى يذوب سماحا % و أكف الأنام بالقحط كزه % % 14(@)(@@) % ففداه كل امرئ يطلق الشات % % م في لحمه ويحفظ خبزه % % 15(@)(@@) % يا رئيسا أحيي الثنا بنوال % % كف عنا إزال الزمان وإرزه % % 16(@)(@@) % لك عزم أجرى السحاب بفضل % % قد غدا ساحبا من الحمد خزه % % 17(@)(@@) % و ثنا أشغل الشفاه بذكرا % % ه فما لامرىء من الذكر نبره % % 18(@)(@@) % نابه العز مفصح لو توخى % % في كراه ق س الخطاب لعزه % % 19(@)(@@) % كلما لاح مجده وقريضي 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms207# % % سبح الناظر الخبير ونزه % % 20(@)(@@) % ربوة الحلم قد أدار عليها % % منطقي قهوة المدائح مزه % % PageV01P1072 البحر : - 1(@)(@@) % أشكو جفا غادة عراني % % من لوعة الصد ما عراهازيادة من % % 2(@)(@@) % ضنيت والدمع ملء جفني % % فلا تراني ولا أراها % % PageV01P1073 البحر : - 1(@)(@@) % جرى دمع عيني فانثنى الحب مغضبا % وقال أراه في الهوى فاضحا سري % % 2(@)(@@) % و أقسم مالي في الهوى فرج سوى % % جفوني أدعوها ومهما جرى يجري % % PageV01P1074 البحر : - 1(@)(@@) % حيت حمى حلب أنفاس غادية % % مشاءة بنميم الروض غماز % % 2(@)(@@) % كم ليلة تم يا ليلاي قد قنعت % % عني بمسرع خطو الطيف هماز % % 3(@)(@@) % كأن وصلك مال في يمين فتى % ما ماله في يديه غير مجتاز % % 4(@)(@@) % إلى العفاة سبوق قبل مسئلة % % حاشا جواد عطاه ذكر مهماز % % 5(@)(@@) % أما نوال ابن يحيى فهو صنعته % % سر أو جهرا كما قد قيل خرازي % % 6(@)(@@) % أهلا بمقدمه العالي فحيث بدا % % فأضبع منه من نيل الوفا هازي % % 7(@)(@@) % أشتاق أهلي وأولادي ليطربهم % % من رؤيتي نظم جزار وخباز % % PageV01P1075 البحر : - 1(@)(@@) % ما يقول المقام أيده الل % % ه ولا زال للسعود يحوز % % 2(@)(@@) % في ولي ببابه ترك الخ % % لق ووافى يجوز أم لا يجوز % % PageV01P1076 البحر : - 1(@)(@@) % لجأت إلى باب الأمير وظله % % و فارقت ذلي اذ وصلت إلى العز % % 2(@)(@@) % و أصبحت من جند المحامد والغنى % % و لا بد للجندي من طلب الخبز % % PageV01P1077 البحر : - 1(@)(@@) % أيا جنة الحسن التي قد تبرجت % % متى أنا بالوصل المؤمل فائز % % 2(@)(@@) % و يا شرعة للحسن قلبي واجب % % عليها متى ممنوع قربك جائز % % 3(@)(@@) % أما وصفات منك قد غارت الظبا % % فأمست ومأواها الفلا والمفاوز % % 4(@)(@@) % لئن كملت منك المحاسن انني % % إلى عطفة من معطفيك لعائز % % PageV01P1078 البحر : - 1(@)(@@) % طاب مقام الوصل مع شادن % % برزت للعيش به برزه % % 2(@)(@@) % و ساعدتني الراح لم انثنى % % و لان بعد المنع والعزة % % 3(@)(@@) % فيالها من ربوة خلفه % % قد أطلعتني فوقها المزة % % PageV01P1079 البحر : - 1(@)(@@) % بالله ربك يا شتا % % ء تحولي عنا وجوزي % % 2(@)(@@) % فلقد طربت إلى المصي % % ف ووقته الحسن العزيز % % 3(@)(@@) % و مللت من بول الحيا % % و فرقت من ريح العجوز % % PageV01P1080 البحر : - 1(@)(@@) % أجزت لهم رواية ماأشاروا % % اليه بمقتضي الشرط العزيز % % 2(@)(@@) % إجازة مادح مثن عليهم % % فيا عجبا لممتدح مجيز % % PageV01P1081 البحر : - 1(@)(@@) % أقسمت ما 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms208# الملك المؤيد في الورى % % إلا الحقيقة والكرام مجاز % % 2(@)(@@) % هو كعبة للجود ما بين الندى % % منها وبين الطالبين حجاز % % PageV01P1082 البحر : - 1(@)(@@) % يا سيد الأصحاب إن عيوننا % % نصب اللقاء وما له تمييز % % 2(@)(@@) % فكأننا الثغر الشنيب فذا لذا % % دان ولكن اللقاء عزيز % % PageV01P1083 البحر : - 1(@)(@@) % يا كعبة الحسن الممنع لا يكن % % بيني وبينك للجفاء حجاز % % 2(@)(@@) % حاشا لها من قامة ألفية % يثني لقاها كاشح هماز % % PageV01P1084 البحر : - 1(@)(@@) % قسما بمجدك يا امام زماننا % % إن المدائح اذ رجتك لفائزه % % 2(@)(@@) % سميت جدوى الشعر واجبة له % % و الناس سموها جميعا جائزه % % PageV01P1085 البحر : - 1(@)(@@) % تتناسب الأوفاق في أفلاكها % % من قبل ما يتناسب الممتاز % % 2(@)(@@) % يحيى ويحيى شاعري وقتيهما % % هذاك جزار وذا خباز % % PageV01P1086 البحر : - 1(@)(@@) % لباب الحمى العزي وجهت مقصدي % % و أصبحت ذا جاه لديه وذا كنز % % 2(@)(@@) % و كنت بذل آخذ الرزق في الورى % % فأصبحت فيهم آخذ المال بالعز % % PageV01P1087 البحر : - 1(@)(@@) % قل لابن مولانا العزيز ومن له % % عند الدكآء النقد والتمييز % % 2(@)(@@) % أيرد عن عتبات بابك جيد % % و الزيف يا ذا الإنتقاد يجوز % % PageV01P1088 البحر : - 1(@)(@@) % لو أنها الزوجة أهديتها % % لبابك العالي فها الجوزه % % 2(@)(@@) % لا عادة لكن مكافاتكم % % أفوز في العمر بها فوزه % % PageV01P1089 البحر : - 1(@)(@@) % أهلا بطيف على الجرعاء مختلس % % والفجر في سحر كالثغر في لعس % % 2(@)(@@) % والنجم في الأفق الغربي منحدر % % كشعلة سقطت من كف مقتبس % % 3(@)(@@) % يا حبذا زمن الجرعاء من زمن % % كل الليالي فيه ليلة العرس % % 4(@)(@@) % وحبذا العيش مع هيفاء لو برزت % % للبدر لم يزه أو للغصن لم يمس % % 5(@)(@@) % خود لها مثل ما في الظبي من ملح % % وليس للظبي ما فيها من الأنس % % 6(@)(@@) % محروسة بشعاع البيض ملتمعا % ونور ذاك المحيا آية الحرس % % 7(@)(@@) % يسعى ورا لحظها قلبي ومن عجب % % سعي الطريدة في آثار مفترس % % 8(@)(@@) % ليت العذول على مرآي محاسنها % % لو كان ثنى عمى عينيه بالخرس % % 9(@)(@@) % اني وان علقت بالقلب صبوته % % لمحوج العيس طي الضوء والغلس % % 10(@)(@@) % سفينة ليس تجري بي لذي بخل % % ان السفينة لا تجري على اليبس % % PageV01P1090 11(@)(@@) % تؤم باب ابن أيوب اذا اعتكرت % % سود الخطوب كما يؤتم بالقبس % % 12(@)(@@) % المانح الرفد أفنانا مهدلة % % فما يرد جناها كف ملتمس % % 13(@)(@@) % والرافع البخل في الدنيا وساكنها 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms209# % % بجود كفيه رفع الماء للنجس % % 14(@)(@@) % محا المؤيد بؤس المقترين فما % % تكاد تظفر جدواه بمبتئس % % 15(@)(@@) % واستأنس الناس جدوى كفه فرووا % % عن مالك خبر العليا وعن أنس % % 16(@)(@@) % ملك يقاس مجاريه بسؤدده % % إذا تقايس عير الدار بالفرس % % 17(@)(@@) % وينتهي لضحى بشر مؤمله % % إذا انتهى من بني الدنيا إلى عبس % % 18(@)(@@) % مظفر الجد مشاء على جدد % % من حلمه اللدن أو من حربه الشرس % % 19(@)(@@) % يخفي اللهى ودنانير الصلات بها % % تكاد تضرب للاسماع بالجرس % % 20(@)(@@) % و ينشر العلم لا قول بمختلف % % إذا رواه ولا معنى بملتبس % % PageV01P1091 21(@)(@@) % و يشبع الامر آراء مسددة % % تمضي وتدفع صدر الحادث الشكس % % 22(@)(@@) % تكون كالعضب أحيانا وآوتة % % تكون من وقعات العضب كالترس % % 23(@)(@@) % لو باشر الافق يوما يمن طلعته % % لما سمعت بنجم ثم منتحس % % 24(@)(@@) % ولو تولت حزون الأرض راحته % % لم يبق في الأرض صلد غير منبجس % % 25(@)(@@) % من مبلغ قومي الزاكي نجارهم % % أني اعتزيت إلى جم العلى ندس % % 26(@)(@@) % مجددا لي في أمداحه نسبا % أبر من نسب في الترب مندرس % % 27(@)(@@) % ما زلت أخبر ممدوحا وأهجره % % حتى اعتلقت بحبل محصد المرس % % 28(@)(@@) % وطاهر الخيم لا تثنى خلائقه % % على الملال ولا تطوى على الدنس % % 29(@)(@@) % ما شمت بارق جدواه فأخلفني % % و لا عهدت إلى معروفه فنسي % % 30(@)(@@) % تلك العلى لابن حمدان على حلب % % و لابن عمار شاو في طرابلس % % PageV01P1092 31(@)(@@) % ما ضرني ان تولوا وهو مرتقب % % و خاس عهد الغوادي وهو لم يخس % % 32(@)(@@) % يا ابن الملوك الأولى خذها عروس ثنا % مصرية المنتمى غريبة النفس % % 33(@)(@@) % الله أكبر صاغ الحق مادحكم % % كأنه ناطق عن حضرة القدس % % PageV01P1093 البحر : - 1(@)(@@) % يا ناسيا عهدي ولست بناسي % % ماالناس إن عذلوا عليك بناس % % 2(@)(@@) % أضحى غرامي فيك نعتا واضحا % فمدامعي تجري بغير قياس % % 3(@)(@@) % واها له دمعي كسا جسدي الضنى % % وسعى الي من الهموم بكاس % % 4(@)(@@) % قال العذول وقد رأى جريانه % % ما في وقوفك ساعة من باس % % 5(@)(@@) % إيها بلفظك يا عذول ولا تزد % % نار الأسى بتردد الأنفاس % % 6(@)(@@) % هي عادة في الحب قد عاش الأولى % % قبلي بها ومضوا إلى الأرماس % % 7(@)(@@) % علق الغرام بعروة فتبعته % % وبعامر فبنيت فوق أساس % % 8(@)(@@) % ماضر بسام البروق لو أنه % % يروي حديث جواي عن 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms210# عباس % % 9(@)(@@) % أبرق له بالشام نيل مدامع % يجريه ذكر منازل المقياس % % 10(@)(@@) % سقيا لمصر منازلا معمورة % بنجوم أفق أو ظباء كناس % % PageV01P1094 11(@)(@@) % وفدى لها من بلدة كم نثرة % فيها لأسراب الدموع أقاسي % % 12(@)(@@) % وطن له سهرت وشابت لمتي % % ونعم على عيني هواه وراسي % % 13(@)(@@) % من لي به والحال ليس بآسن % كدر وعطف الدهر ليس بقاس % % 14(@)(@@) % والطرف يستجلي غزالا آنسا % بالنيل لا ثورا على باناس % % 15(@)(@@) % والعيش حلي طالما خطرت به % % أعطاف كل مهفهف مياس % % 16(@)(@@) % ثم انقضى ذاك الزمان وما بقى % % من حليه عندي سوى الوسواس % % 17(@)(@@) % بالرغم إن قامت مآتم بعده % % عندي وفاز سواي بالأعراس % % 18(@)(@@) % هن الحظوظ فعش بهن ولا تقل % % عقلي أعيش به ولا احساسي % % 19(@)(@@) % وضحت خفيات الأمور لفكرتي % % وأمور هذا الحظ في إلباس % % 20(@)(@@) % هنئت حظك يا دمشق بحاكم % % أمن الرجاء به من الإبلاس % % PageV01P1095 21(@)(@@) % قاضي القضاة وإنها لمكانة % طهرت بسؤدده من الأدناس % % 22(@)(@@) % ذو البيت طاف به الرجاء ملبيا % داعي الفخار إلى الندى والباس % % 23(@)(@@) % نسب من الأنصار زان سماءه % % من ولده حرس من الأحراس % % 24(@)(@@) % المشرقين اذا ادلهمت حالة % إشراق ضوء الصبح في الإغلاس % % 25(@)(@@) % والصائنين من المعائب عيبة % نبوية مسكية الأنفاس % % 26(@)(@@) % والحافظين الشرع إما فارس % % أو جالس للحكم بين أناس % % 27(@)(@@) % عبروا وقد وصلوا علي فخارهم % % بعليهم فاعجب لحسن جناس % % 28(@)(@@) % اللابس التقوى سما وفعائلا % فانظر له في الفضل فضل لباس % % 29(@)(@@) % مغني الأنام فما تعطل عنده % % في الحكم غير محاضر الإفلاس % % 30(@)(@@) % ومعجل الجدوى جزافا لا كمن % % هو ضارب الاخماس في الاسداس % % PageV01P1096 31(@)(@@) % ومجدد العلم الذي شدت له % % للطالبين قدآثم الأحلاس % % 32(@)(@@) % وافى الشآم فأشرقت أيدي اللهى % % وجرت أمور العدل بالقسطاس % % 33(@)(@@) % وتجلت الأحكام شمس ظهيرة % % وأطاع عطف الدهر بعد شماس % % 34(@)(@@) % وتنزهت في حكمها عن قادح % كلم تضيء إضاءة المقباس % % 35(@)(@@) % ثبت تمر عليه أقوال العدى % % مر الرياح على الأشم الراسي % % 36(@)(@@) % بمدارس فيها العلوم تبرجت % % والجود قد أخفى بني مرداس % % 37(@)(@@) % بين السراة وبين نقد خلاصه % % مابين مصري وبين نحاس % % 38(@)(@@) % وبكفه القلم المسدد سهمه % % يوم الندى والعلم في القرطاس % % 39(@)(@@) % قلم ينص على إمامة فضله % % فيروقنا بشعاره العباسي % % PageV01P1097 البحر : - 1(@)(@@) % سيج ورد الخدود بالآس % % فما لجرحي عليه من 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms211# آسي % % 2(@)(@@) % أغيد لي فوق وجنتيه دم % يروي أحاديث قلبه القاسي % % 3(@)(@@) % يجرح قلبي آس العذار وقد % % كان دوآء الجراح بالآس % % 4(@)(@@) % واعجبا للشجي ممتحنا % في كل أحواله بإعكاس % % 5(@)(@@) % هذا وشرخ الشباب يؤنسه % % فكيف والشيب بعد إيناس % % 6(@)(@@) % يا شعرات المشيب اعدمني % % هناء عيشي بياضك الراسي % % 7(@)(@@) % وكيف لي عيشة مهنأة % % والبيض مسلولة على راسي % % 8(@)(@@) % أين زمان الشباب أقطعه % % وأين ميدانه وأفراسي % % 9(@)(@@) % أين مقالي يا صاحب الفرس ال % % نهد أرحني من طول وسواسي % % 10(@)(@@) % لا نهد إلا من صدر غانية % ولا كميت إلا من الكاس % % PageV01P1098 11(@)(@@) % من كف لدن القوام مشتمل % % بفرعه كالقضيب مياس % % 12(@)(@@) % عففت عن كأسه فأرشفني ال % % غب منها بقلبه القاسي % % 13(@)(@@) % مدامة من فم يضيق فما تن % % زل إلا بمص بواس % % 14(@)(@@) % جالسني استضي بغرته % % فحبذا شمعتي وجلاسي % % 15(@)(@@) % وأنظم الشعر في سماحكم % % فحبذا كوكبي ونبراسي % % 16(@)(@@) % تغزلي فيه والمدائح في % % علي قاضي النوال والباس % % 17(@)(@@) % قاض قضى بالندى العميم فما % % في حكمه محضر لا فلاس % % 18(@)(@@) % الحارس الملك باليراعة لا % % يحتاج نضو سيوف حراس % % 19(@)(@@) % ناهيك بالليل والنهار لذي % % أجر وذكر أطراس وأنفاس % % 20(@)(@@) % سد يا ابن فضل الإله كيف تشا % % سيادة ما لذكرها ناس % % PageV01P1099 21(@)(@@) % في الشرق والغرب كل ذي قلم % % كان شهيرا بذكرها خاسي % % 22(@)(@@) % مثل ابن عباد الفارسي غدا % % مفترسا عند أبي فراس % % 23(@)(@@) % والفاضل الآن عائز لحلى % كم كنست من حديث مكناس % % 24(@)(@@) % والمغربي الوزير أصبح من % % روعته يعتزي إلى فاس % % 25(@)(@@) % فيا أبا القاسم البليغ لقد % % ألوى صباح بضوء مقباس % % 26(@)(@@) % إن عليا جواد سبق على % قبل زهير وقبل جساس % % 27(@)(@@) % وما زهير كنبت شاعره % % لا لينا شعره ولا جاسي % % 28(@)(@@) % علمه النظم فضل سيده % % فجاء حليا بغير وسواس % % 29(@)(@@) % علي بحر أفاض جوهره % % فنظمته الورى بمقياس % % 30(@)(@@) % وألبستهم علياه فاجتلبوا % % إيناس نعماه قبل الباس % % PageV01P1100 31(@)(@@) % وأنفقوا تبره عليه ثنا % في حالتيه إنفاق أكياس % % 32(@)(@@) % دعا لمصر رجاي ممتدحا % نعمآء سلطانها على راسي % % 33(@)(@@) % فجئت أسعى على المحاجر والع % % ين سعيدا رملي واحساسي % % 34(@)(@@) % أبواب خير الملوك لا برحت % % أركان حج وحط أحلاس % % 35(@)(@@) % قربني فضلها على يد من % % لله فضل به على الناس % % 36(@)(@@) % يا سيدا ألحقت مفاخره % % بآل حمدان آل 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms212# مرداس % % 37(@)(@@) % إلباس تشريفي اقتضى فأزل % % إلباس حسنى بحسن إلباس % % 38(@)(@@) % لازلت في الخضر عيش ذي أمل % % عداك والحاسدون في الباس % % PageV01P1101 البحر : - 1(@)(@@) % عين حواجبها ترمي بأقواس % % منها السهام وقلبي منه قرطاسي % % 2(@)(@@) % وفوق رأسي من شيب الأسى نطف % ماذا جرى في الأسى منها على راسي % % 3(@)(@@) % نعم وللعبد في باب العلا فكر % تقول للعبد حاشا قلبه قاسي % % 4(@)(@@) % منش على بره عظمي ولحمي من % % دهر وباني الولا من فوق آساسي % % 5(@)(@@) % فكم بنيت بيوتا من ولا وثنا % درست فيها ودامت غير ادراس % % 6(@)(@@) % إن ينسني الهم منها ما أجيد فما % % قصرت بري ولا باعدت ايناسي % % 7(@)(@@) % الناس أنت فحق أن يقال كذا % % فليصنع الناس في الدنيا مع الناس % % PageV01P1102 البحر : - 1(@)(@@) % وسواس حلى لا كوسواس % % سيان خناسه وخناسي % % 2(@)(@@) % حبست أغزالي على حسنها % % فيا له ديوان أحباس % % 3(@)(@@) % تحبيس آمالي على راحتي % % سعد التقى والجود والباس % % 4(@)(@@) % الصاحب المربي على ماروى % % عن ابن عباد بن مرداس % % 5(@)(@@) % يا باسم البشر الذي فضله % % يعيده الفضل ابن عباس % % 6(@)(@@) % إن أنس مدحي لك يوما فما % % نسيت جدوى قدمك الناسي % % 7(@)(@@) % قل لبني الدنيا ألا هكذا % % فليصنع الناس مع الناس % % PageV01P1103 البحر : - 1(@)(@@) % ومضروبة من غير جرم وربما % % أقيم عليها الحد من دون نفسها % % 2(@)(@@) % لها من بيوت العرب بيت مجدل % % أديما وعند العجم أكثر جنسها % % 3(@)(@@) % فتدخل فيه رأسها قبل رجلها % % وتخرج منه بأرجلها قبل رأسها % % 4(@)(@@) % رباعية ان بدلوا ثانيا لها % % فعدوا سنينا تمض في كشف لبسها % % PageV01P1104 البحر : - 1(@)(@@) % لعمري لقد صنفت ما ليس دارسا % على أنه في العلم يتلى ويدرس % % 2(@)(@@) % تحيرت الأفكار دون صفاته % % فيا حبذا الحر الرقيق المجنس % % PageV01P1105 البحر : - 1(@)(@@) % فديت مؤذنا تصبو اليه % % بجامع جلق منا النفوس % % 2(@)(@@) % لقد زف الزمان به مليحا % تكاد بأن تعانقه العروس % % PageV01P1106 البحر : - 1(@)(@@) % أفدي مليحا في البرايا لم أزل % % طول الزمان عليه في وسواسي % % 2(@)(@@) % قالوا أتقطعه كثيرا قلت من % % راحات قلب المرء قطع الياس % % PageV01P1107 البحر : - 1(@)(@@) % قل للرئيس جمال الدين لا برحت % % هباته ذات تأسيس وإيناس % % 2(@)(@@) % واصل رجائي بعرف الديك مقتبلا % لن يذهب العرف عند الله والناس % % PageV01P1108 البحر : - 1(@)(@@) % هنيئا لمولانا علوا علوته % % يحق له فرط الولاء من الناس 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms213# % % 2(@)(@@) % دعاني نداه حين حدت عن الورى % % فلبيته عشرا وقلت على راسي % % PageV01P1109 البحر : - 1(@)(@@) % يا غائبا عن مجلس قد شاتمت % % ندماه واستعلت لديه الأكوس % % 2(@)(@@) % نبئت أن النار بعدك أوقدت % % واستب بعدك يا كليب المجلس % % PageV01P1110 البحر : - 1(@)(@@) % كتاب مع المطل أحضرته % % قليل الحلاوة إذ يلتمس % % 2(@)(@@) % كأن حلاوة إحضاره % % حلاوة يوم خميس العدس % % PageV01P1111 البحر : - 1(@)(@@) % بقيت مدى الدنيا جمالا لدولة % لها منك شهم في اللقا ورئيس % % 2(@)(@@) % نسوق لها غر الفتوح جنائبا % % وأول هاتيك الجنائب سيس % % PageV01P1112 البحر : - 1(@)(@@) % تهني مدى الأيام بالخلع التي % % وجدنا بها الأيام واضحة الأنس % % 2(@)(@@) % أضاء بها وجه الزمان وأهله % % ولم أر من أطواقها مطلع الشمس % % PageV01P1113 البحر : - 1(@)(@@) % أفدي إماما حكى حسنا ليوسف إذ % % للشافعي حكى أوقات تدريس % % 2(@)(@@) % يقول في الحفل رائيه وسامعه % % هذا ابن يعقوب أم هذا ابن ادريس % % PageV01P1114 البحر : - 1(@)(@@) % يااير لا تركن لعلق ولا % % تثق به واتركه مع نفسه % % 2(@)(@@) % ولا ترج الود ممن يرى % % أنك محتاج إلى فلسه % % PageV01P1115 البحر : - 1(@)(@@) % لله ظبي كنيسة لاحظته % % فكأنما لاحظت ظبي كناس % % 2(@)(@@) % يجلو محاسنه ويتلو صحفه % % ناهيك من شمس ومن شماس % % 3(@)(@@) % عجبا له في دين عيسى كيف قد % % أضحى يعارض حكمه بقياس % % 4(@)(@@) % هذاك أحيي الناس من موت وذا % % في الحب قد وافى بموت الناس % % 5(@)(@@) % من أجل مبسمه الشهي تفتحت % % في كفه أبدا شفاه الكاس % % 6(@)(@@) % و كأنما مد اليدين صليبه % % تبغي عناق قوامه المياس % % 7(@)(@@) % على أيمن الاوقات مقدم من له % % عصا قلم أضحى بها الشام محروسا % % 8(@)(@@) % تقول لهايتك العصابة لو وفت % % فراعنة الكتاب قد جاءكم موسى % % 9(@)(@@) % يقبل الأرض وينهي إلى % % علم المقر الأشرف الشمس % % 10(@)(@@) % أن ليمنى سيدي أنملا % % نوالها فرض على الخمس % % PageV01P1116 11(@)(@@) % و وعد بعض الناس وعدكما % % يقال لاحسي ولا مسي % % 12(@)(@@) % فلا يكل قصدي عليه سوى % % في البشر والترحيب والأنس % % 13(@)(@@) % لازلت داني الجود في القدر عن % % عدو وافيه على الأمس % % 14(@)(@@) % قاضي القضاة بقيت مأثور الدعا % % وجزيت خيرا عن صريخ الناس % % 15(@)(@@) % الله أكبر انما هي أمة % % مرحومة في ساعة الإبلاس % % 16(@)(@@) % في أمسها العباس يسقيها الحيا % % و اليوم يسقيها أبو العباس % % 17(@)(@@) % قلت اذ عم علي بالندى % % سائر الناس لقد خص رئيسا % % 18(@)(@@) % صاحب 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms214# الاسرار بحر مسعف % % لوزير الشام يثني عنه بوسا % % 19(@)(@@) % رب سخر لي موسى مسعفا % ياإلها سخر البحر لموسى % % 20(@)(@@) % إذا نزلت حماكم يا بني حجر % % فيا سنا أفقي يا كأس ايناسي % % PageV01P1117 21(@)(@@) % ان الفقير الذي في أي زاوية % % آوى إلى ظلكم يا آي احراس % % 22(@)(@@) % أوقات أنسكما في ضوء كل دجى % % يا نور شمعي أو يا صفو جلاسي % % 23(@)(@@) % يا من لفضلي جاهه ونواله % % تشكى عوادي الذل والافلاس % % 24(@)(@@) % داوى أذى رأسي طبيب قبلها % % داوى لرجلك حظره من باس % % 25(@)(@@) % لكن شفيت وما شقيت فحبذا % % اني برجلك قد وقيت براسي % % 26(@)(@@) % باتت تسائل عن دستي فقلت لها % % ما حال دست ضعيف ما له فرس % % 27(@)(@@) % قالت فان الجناب الناصري له % % وعد فكيف من الانجاز تبتئس % % 28(@)(@@) % أقسمت لو وعدت نعماؤه زحلا % ما عاد بين نجوم الليل ينتحس % % 29(@)(@@) % قلت وقد أقبل في أحمر % % وشهره المسبل كالحندس % % 30(@)(@@) % يا عجبا للشمس شمس الضحى % % طالعة بالليل في الاطلس % % PageV01P1118 31(@)(@@) % ايا سيدي ان لم تكن ثم زورة % % فنظم كأمثال العقود النفائس % % 32(@)(@@) % يهاب ابن قادوس اقتحام بحوره % % ويقلى لعجز دونه ابن قلاقس % % 33(@)(@@) % ظمئت إلى تقبيل كف كريمة % % تكاد بها الاقلام تعشب باللمس % % 34(@)(@@) % و أرمد عيني التسهد والبكى % % وحسبك اني لا أرى بهجة الشمس % % 35(@)(@@) % قام غلام الامير يحسب في % % يوم طهور البنين طاووسا % % 36(@)(@@) % فأنزل الحاضرون من سبق % % وعاد ذاك الطهور تنجيسا % % 37(@)(@@) % تهن بعشر واضح الفضل مشرق % % كما أشرقت في أفقها طلعة الشمس % % 38(@)(@@) % تقبل فيه منك خمس أنامل % % فيحظى كما قد قيل بالعشر والخمس % % 39(@)(@@) % تهن بيمنها سنة تجلت % % بأنواع الهنا من غير لبس % % 40(@)(@@) % بها افترض الهنا والمدح يهدي % % لمولانا وحبك فرض خمس % % PageV01P1119 41(@)(@@) % يا حبذا في الحسن ناعورة % % كأنها من فلك الشمس % % 42(@)(@@) % تحمي حمى الروضات من مائها % % وشكلها بالسيف والترس % % 43(@)(@@) % هنيئا لمولانا الوزير ذخائر % % من البر والمعروف نامية الغرس % % 44(@)(@@) % تسير بها الأقوال في كل بلدة % % وتعرضها الأعمال في حضرة القدس % % 45(@)(@@) % لا ييأسن من الجراية معسر % % أودى بمحضر حالة الإفلاس % % 46(@)(@@) % موسى هو الآن العزيز وعامنا % % عام الرجا فيه يغاث الناس % % 47(@)(@@) % مولاي أرجعني لبيت المال في % % قوتي ومن مال الجهات بسي % % 48(@)(@@) % مادام 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms215# معلومي بدار ضربها % % فبعد دار الضرب دار الحبس % % 49(@)(@@) % هنيئا لمولانا حصون من الدعا % % يبيت بها من حادث الدهر محروسا % % 50(@)(@@) % و ذكر وأجر في السيادة والتقى % % يقولون قد أوتيت سؤلك يا موسى % % PageV01P1120 51(@)(@@) % اليك ابن عباس سرى حامل الرجا % % فأغنيت من فقر وآمنت من باس % % 52(@)(@@) % و في بابك العالي تفسرت المنى % % ومن أين للتفسير مثل ابن عباس % % 53(@)(@@) % ان الوزير أدام الله نعمته % % أزال بالعدل عنا الفقر والبوسا % % 54(@)(@@) % اذا تفرعن خطب أنت خائفه % % فقل أجرني من فرعون يا موسى % % 55(@)(@@) % يا واصف الخيل بالمكيت وبال % % نهد أرحني من طول وسواسي % % 56(@)(@@) % لانهد الا من صدر غانية % % ولا كميت الا من الكاس % % 57(@)(@@) % تناومت فابتدرت كعثمها % % بطعن ذا الرمح حامي الترس % % 58(@)(@@) % فأعلنت صرخة فقلت لها % % مالك قالت طعنت في كسي % % PageV01P1121 البحر : - 1(@)(@@) % مذ قيل فرعك بالذوائب عرشا % % شرب المتيم كأس حبك وانتشى % % 2(@)(@@) % وببعض ما فعلت بقلبي في الهوى % % عيناك صار الليث صيدا للرشا % % 3(@)(@@) % ما بت ملآن الحشا من لوعة % لولا الولوع بحب مهضمة الحشا % % 4(@)(@@) % هيفاء أما جفنها فقد اشتكى % % سقما وأما صدغها فتشوشا % % 5(@)(@@) % تفاح وجنتها المفدى مقسم % بدمشق لا عدم المتيم مشمشا % % 6(@)(@@) % تدمي جفوني وجنة دميت بها % % وأنا الذي بالحسن منك تحرشا % % 7(@)(@@) % ولرب ليل قد عطفت وما انتشى % % فيه قوامك يا سعاد وما ارتشى % % 8(@)(@@) % ولففت هاتيك الذوائب أجتلي % % نعم العروس أو الأمير مشربشا % % 9(@)(@@) % وأكاد آكل خده متجوعا % مما شربت رضابه متعطشا % % 10(@)(@@) % ثم انتبهت وغاب طيف محجب % قطع الفؤاد المستهام وأرشا % % PageV01P1122 11(@)(@@) % بالليل ألقى طيفه متأنسا % واليوم ألقى هجره متوحشا % % 12(@)(@@) % فمن العشاء إلى الصباح لي الهنا % % ولي الشقاء من الصباح إلى العشا % % 13(@)(@@) % يا أيها الطيف الذي ماضر من % % أهداه لما أن عشا لو أنعشا % % 14(@)(@@) % سكني الذي مهدت من قلبي ومن % % كبدي له بين الجوانح مفرشا % % 15(@)(@@) % أروي نسيم البان من أعطافه % % فكرا وأروي من سناه المدهشا % % 16(@)(@@) % هبني رضيت بما ارتضاه فما لمن % % يلحي عليه بنفسه قد أبلشا % % 17(@)(@@) % إن العذول إذا رآه ولامني % % أبصرتموا أعمى يحاول أطرشا % % 18(@)(@@) % ما آنس الدنيا إذا أبصرته % % وإذا بصرت بعذلي ما أوحشا % % 19(@)(@@) % حبي له حب الثنا لعليه 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms216# % % هذا لعمر أبيك مع هذا فشا % % 20(@)(@@) % قاضي القضاة وأنها لمكانة % خطبت تقاه كما تشا وكما يشا % % PageV01P1123 21(@)(@@) % والمرتقي رتب العلى لا غش في % % محض الفخار ولا على صبح غشا % % 22(@)(@@) % لا وتر عند الشافعي سواه في % % نص الثنا ممن مضى أو من نشا % % 23(@)(@@) % أوفى السراة على المفاخر مفردا % فانظر اذا عد الجنود وجيشا % % 24(@)(@@) % أهل الثناوالمجد هذا طار في % % أفق وذا مع نسر شهب عششا % % 25(@)(@@) % من كل أزهر في السماحة يرتجى % % كل الرجاء وفي الحماسة يختشى % % 26(@)(@@) % دارت رحى الحرب الزبون به على % % عصب فحق رؤوسهم أن تحرشا % % 27(@)(@@) % ووفى بفياض النوال فما على % % عافيه أن يرد النمير بلا رشا % % 28(@)(@@) % وتجانست في العلم دوحته التي % % مدت فيالك مغرسا أو معرشا % % 29(@)(@@) % شرفا أبا الحسن الإمام بسؤدد % ذهل الحسود به وطاش وطشطشا % % 30(@)(@@) % ومكانة في العلم شب بقاعها % % نار الهدى فعشا اليها من عشا % % PageV01P1124 31(@)(@@) % وشريعة نهنهت عنها ملحدا % مازال يبحث لحده حتى احتشى % % 32(@)(@@) % وزهادة تبع ابن ادهم سبقها % % في عزة أجرى بقاها الأبرشا % % 33(@)(@@) % ومكارم تكفى السؤال وهيبة % % تكفي روائغ ذكرها أن تبطشا % % 34(@)(@@) % وبلاغة أما الطروس برقشها % % فلكم صفت في الواصفين مرقشا % % 35(@)(@@) % واستشعر الماضي بها فلأجل ذا % % قد كان فاضل دهره متكمشا % % 36(@)(@@) % نعم الفريد دراية ورواية % % يا صاحبي علم وحفظ فتشا % % 37(@)(@@) % أزكى الورى قلما يفيد مصنفا % واسد سهما بالثلاث مريشا % % 38(@)(@@) % بيتا يهز الغصن منه لمجتن % % إذ هز للجاني المعاند أرقشا % % 39(@)(@@) % في كف من لاعيب فيه سوى ندى % % فهم على كل المحامد نبشا % % 40(@)(@@) % مهما بدا مدح بديع قوله % % أو قاصر مد اليدين فحوشا % % PageV01P1125 41(@)(@@) % عربية في مجده قالت لمن % % يلحاه في الأمداح لو ذقت الكشا % % 42(@)(@@) % وهوى يطالب علمه ونواله % % فكأنما يعطي على الطلب الرشا % % 43(@)(@@) % وزيادة في مشترى مجد على % % قوم وكل جل عن أن يفحشا % % 44(@)(@@) % ان الذي في يوم جود لامه % % مثل الذي في يوم حج أفحشا % % 45(@)(@@) % لاقيته والحال أنكد ما أرى % % فأعادني والحال أوفق ما أشا % % 46(@)(@@) % من بعد ما غابت بنو أيوب عن % % داع تحارف بعدهم وتحرفشا % % 47(@)(@@) % واختل ذهنا فهو من اقتاره % % لا من غناه كما يقال تكبشا % % 48(@)(@@) % أمشي إلى 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms217# القوت الزهيد وربما % % أعلو فلا قدمي ولا حالي مشى % % 49(@)(@@) % وأبيت أرعى النيرات تخالني % % بالسرج عن ماضي الكرام مفتشا % % 50(@)(@@) % حتى مددت اليه راحة عائل % % طاو فعجلنا نداه وكرشا % % PageV01P1126 51(@)(@@) % إن انقش الصحف الطوال بمدحه % % فلقد أخذت من الدراهم أنقشا % % 52(@)(@@) % يا كاتم الجدوى وتلك شهيرة % % كالمسك ان تكتم نوافحه فشى % % 53(@)(@@) % يا من جلبت لسوق أنعمه الثنا % % سلعا فعاش بها الرجا وتعيشا % % 54(@)(@@) % خذ من مديحي كل باسمة الربى % % مرت على سمع الحسود فأجهشا % % 55(@)(@@) % من نظم مصري أقام بجلق % % ما كان في هذا الطراز مجيشا % % PageV01P1127 البحر : - 1(@)(@@) % يا أديبا في نظمه لا يجارى % % وعلى طرق لغزه لا يماشى % % 2(@)(@@) % ماش من شئت في طرائق شتى % % من علوم فانه يتلاشى % % 3(@)(@@) % واهد ما شئت لي نباتا ولغزا % قد هدى خاطري وان قيل طاشا % % 4(@)(@@) % في نبات قلنا جمادا فلما % % صحفوا ماس كالقضيب انتعاشا % % 5(@)(@@) % كان طعما فأحسنوا حين زادو % % ه فأضحى ذاك الطعام قماشا % % 6(@)(@@) % ثم أبدلت حين نقصت حرفا % فوجدت القماش أصبح شاشا % % 7(@)(@@) % بأبي أنت أطربتك معاني % % ك فقال اقتضاب نظمك ما شا % % PageV01P1128 البحر : - 1(@)(@@) % خدك بالورد من حشاه ومن % % بمسك هذا العذار قد نقشه % % 2(@)(@@) % يا من أغاظ الرماح معطفه % % فهي تخاف القدود مرتعشه % % 3(@)(@@) % حتى م ياروضتي ويا غصني % % حشاشتي من تقاطع دهسته % % 4(@)(@@) % ووحشة بيننا يؤكدها % % نحو الجفا فهي هكذا وحشه % % 5(@)(@@) % أسفت لشاشي الذي قد مضى % % وفاز به سارق حاشه % % 6(@)(@@) % ووالله ما بي مما جرى % % سوى قولهم صفعوا شاشه % % 7(@)(@@) % قلت ولي في هوى حبيبي % % قلب رقيق عليه يدهش % % 8(@)(@@) % بالجفن والصدغ يا عنائي % % هذا سقيم وذا مشوش % % 9(@)(@@) % يا سائلي في وظيفتي عن % % ضيعة حالي وعن معاشي % % 10(@)(@@) % ما حال من لا يزال يطوي % % مسافة القصر وهو ماشي % % PageV01P1129 11(@)(@@) % قال الدمشقي حبي % % دنا الرحيل المشوش % % 12(@)(@@) % وحق تفاح خدي % % لا عشت بعدي مشمش % % 13(@)(@@) % هجر الشباب ومن أحب % % وكنت ذا نعمى وطيش % % 14(@)(@@) % يا هاجري لا مات من % % يلحي عليك وعاش عيشي % % 15(@)(@@) % يا من زهت عن أن تماشي شخصها % % قمرا وعن غصن الرياض تماشي % % 16(@)(@@) % عكس الضنى والسهد حالي فاغتدى % % نومي سباتي والنهار معاشي % % 17(@)(@@) % علمتني يا دهر فضل علاقة % % مأثورة 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms218# في حرفة ومعاش % % 18(@)(@@) % ان كان حالي غير ماش انه % % في سائر الامثال مثل الماشي % % PageV01P1130 البحر : - 1(@)(@@) % يا لاعب النرد الذي وصفه % % بحر ترى الافكار فيه تغوص % % 2(@)(@@) % انظر إلى وصفي وما حزته % % من أربع للعيش فيها نصوص % % 3(@)(@@) % خواتم اللذات محتاجة % % في هذه الدنيا لهذي الفصوص % % PageV01P1131 البحر : - 1(@)(@@) % كم نعمة تقوية أفضت بها % % سور الثنا للحمد والاخلاص % % 2(@)(@@) % كل الظنون بغيره خرجية % % والظن في نعماه خاص الخاص % % 3(@)(@@) % وأغن في الفقهاء رمت تسليا % فأتى العذار بحسنه المخصوص % % 4(@)(@@) % وأعدت فاتحة الهوى اذ نص في % % خد فلم تبطل على المنصوص % % 5(@)(@@) % رجعت إلى مغناك والحمد والدعا % % يبثان لفظا في المنازل لا يحصى % % 6(@)(@@) % وفي السجد الاقصى وفي الربع اذ دنا % % فقد شهد الادنى بذلك والاقصى % % 7(@)(@@) % ما قصر القصاص في فعله % % بصاحب كان به ذا خصوص % % 8(@)(@@) % وافى يذر القمح يرجو له % % نفعا فما أعطاه الا الفصوص % % 9(@)(@@) % أصبحت يا سيدي ويا سندي % % أقص في أمر بغلتي القصصا % % 10(@)(@@) % بالأمس كانت لفرط سرعتها % % طيرا وفي اليوم أصبحت قفصا % % PageV01P1132 11(@)(@@) % ليهن حمى الشهباء قاض حوت به % % كمالا على تفضيله اتفق النص % % 12(@)(@@) % فلو مثلث كتب النحاة بنعته % % لما جاز أن يجري على نعته النقص % % 13(@)(@@) % كم مدحة قد أجدتها غزلا % % وقصة المدح بعد لم تقصص % % 14(@)(@@) % لولا الامام التقي ما مدحت % % ولم يكن لي ولا لها مخلص % % 15(@)(@@) % حملت خاتم فيه فصا أزرقا % من كثرة اللثم الذي لم أحصه % % 16(@)(@@) % لولاه ما علم الرقيب فيا له % % من خاتم نقل الحديث بفصه % % PageV01P1133 البحر : - 1(@)(@@) % خلع أنشرت زمان الرياض % % باخضرار من نورها في ابيضاض % % 2(@)(@@) % حسبها يا غمام عندك سقيا % لامع البرق صادق الايماض % % 3(@)(@@) % ملأت أعين الأعادي بياضا % حين لاقوا سعودها باعتراض % % 4(@)(@@) % من رأى قبلك الشهاب مضيئا % مشرقا في تألق وبياض % % 5(@)(@@) % ما أظلت كمثل سؤددك الخض % % راء فاسحب من ذيلها الفضفاض % % 6(@)(@@) % أنت زينتها وكم زينت الاغ % % ماد قدما بالمرهفات المواضي % % 7(@)(@@) % فعيون من الجلالة والحس % % ن لها بين بسطة وانقباض % % 8(@)(@@) % عش كذا للسعود مستقبلات % % بين عام آت وآخر ماضي % % 9(@)(@@) % وليفاخر بك الملوك مليك % % هو والله والورى عنك راضي % % 10(@)(@@) % حبذا للزمان منك رئيس % % شد عقد الامور بعد 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms219# انتقاض % % PageV01P1134 11(@)(@@) % ناظم من جواهر اللفظ فيه % % ومن الذم صائن الاعراض % % 12(@)(@@) % ذو يد موسوية قد تحدت % % بيراع كالحية النضناض % % 13(@)(@@) % راش منها البنان نبعة سهم % % فأصابت شواكل الاغراض % % 14(@)(@@) % وأفاضت بحري نوال وعلم % % فأجدنا في مدحها المستفاض % % 15(@)(@@) % يالها نبعة على طود حلم % % يتغاضى عن شعرنا المنهاض % % 16(@)(@@) % لو عدانا منه وحاشاه بر % لاكتفينا من بره بالتغاضي % % 17(@)(@@) % رب معنى أصابه قبل أن ير % % سل سهم البديه بالانباض % % 18(@)(@@) % وعيون جلى علينا من العل % % م وكانت في غاية الاغماض % % 19(@)(@@) % ومعان قد شاد بيت سناها % % وبيوت السادات بين انقضاض % % 20(@)(@@) % يا ابن يحيى دنياه بالدين والفض % % ل منسي فضيلها ابن عياض % % PageV01P1135 21(@)(@@) % ليس يلجى إلى التقاضي مرجي % % ك ويوفى بزاخر فياض % % 22(@)(@@) % واذا الفضل كان عوني على المر % % ء تقاضيته بترك التقاضي % % 23(@)(@@) % أنت أدرى بحالتي وبحقي % % فأغثني بحازم الفعل ماضي % % 24(@)(@@) % واصطنعني فللصنيعة عندي % % موضع الغيث في زكي الأراضي % % 25(@)(@@) % فيروي غليلها من نداه % % ويحييه شكرها بالرياض % % 26(@)(@@) % واستمعها يا أعرب الخلق نطقا % ذات رفع وإن أتت في انخفاض % % 27(@)(@@) % مقسم وزنها بأن بحوري % % لا توازى في نقدكم بالحياض % % 28(@)(@@) % حدت فيها عن عادة الغزل الحل % % و لمدح منزه الاحماض % % 29(@)(@@) % مع نزوعي إلى هوى كل بدر % % لست بالبدر عنه بالمعتاض % % 30(@)(@@) % بعته الروح بالتواصل يوما % غير أنا لم نفترق عن تراض % % PageV01P1136 31(@)(@@) % ولكم عذل بحبيه أغروا % % فترى من أغراه بالاعراض % % 32(@)(@@) % خوفوني من مقلتيه سهاما % وهي والله منتهى أغراضي % % PageV01P1137 البحر : - 1(@)(@@) % قل لقاض من صنعه عزلوه % % وهو بالعود طامع متقاضي % % 2(@)(@@) % مت فما أنت حاكم أبد الده % % ر على الناس فاقض ما أنت قاض % % PageV01P1138 البحر : - 1(@)(@@) % ظننا طوله يجدي % % بيوم العرض أو يرضي % % 2(@)(@@) % فلا والله ما أجدى % % وراح الطول في العرض % % PageV01P1139 البحر : - 1(@)(@@) % شكرا لها يا سيدي منحة % % معهودة وانظر لها أيضا % 2(@)(@@) % أصابعا سودا ولكنها % % والله في حالي يد بيضا % % PageV01P1140 البحر : - 1(@)(@@) % تهن بها بيضاء من خلع الرضى % % تخبر أن العيش يلقاك أبيضا % % 2(@)(@@) % ويا حبذا خضراء لما لمستها % % بكف رأينا الغيث في الحال روضا % % 3(@)(@@) % وما الغيث إلا الطيلسان الذي حوى % % بك الغيث هامي الجود والبدر قد أضا % % 4(@)(@@) % أخا الشمس قد أذكرتني الشمس صاحبا % % فأهلا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms220# بمن وافى وسقيا لمن مضى % % 5(@)(@@) % لعمري لقد أبقى أخوك براحتي % % نوالا تقضيت السنين وما انقضى % % 6(@)(@@) % فلا زلت سعد الدين للشمس مسعفا % توفق وفقا للسيادة مرتضى % % 7(@)(@@) % فما منكما إلا رئيس وماجد % فلا فرق بين الفرقدين ولا انقضا % % 8(@)(@@) % نادى الهنا قلبا قد كن في حذر % ان الشفاء على كل الأنام رضي % % 9(@)(@@) % حاشا الوزير من الشكوى ولا برحت % % قلوب أعدائه تشكو من المضض % % 10(@)(@@) % حاشا الزمان الوزيري الذي جمعت % % ذكراه اسما وفعلا غير منتقض % % PageV01P1141 11(@)(@@) % ياسيدا سن حد العزم مفترضا % شرع الثنا نعم مسنون ومفترض % % 12(@)(@@) % وللمدائح يا من شف جوهره % % في المكرمات فما تشكو من العرض % % 13(@)(@@) % لارد سهمك عن نحر العداة ولا % % نالوا من السهم ماراموا من الغرض % % 14(@)(@@) % صحت بصحتك الدنيا فليس بها % % غير الذي في جفون الغيد من مرض % % 15(@)(@@) % يا مليكا به عن الدهر يرضى % % وبآرائه الخطوب تراض % % 16(@)(@@) % بالهنا والسعود مقدمك الزا % % ئد عما تمنت الأغراض % % 17(@)(@@) % سبقتك الاخبار تنفح روضا % ثم وافى غمامك الفياض % % 18(@)(@@) % ما رأينا من قبلها غيث عام % سبقته إلى القدوم الرياض % % 19(@)(@@) % أوما لجفنك أو لفعلك ماضي % % في سفكه لدمي وفي الأعراض % % 20(@)(@@) % لك يا أمير الحسن حكم فاقض بي % % ما أنت في أهل المحبة قاض % % PageV01P1142 21(@)(@@) % وسهام لحظك لا ترد عن الحشا % % ووحق حسنك إنها أغراضي % % 22(@)(@@) % وتلذ أمراضي عليك وليتني % % أدري أحسنك ساخط أم راضي % % 23(@)(@@) % اذا الله محسنا عن مقصر % % فكافى ابن يعقوب الامام وعوضا % % 24(@)(@@) % وأصبح هذا الصاحب السر أنعما % % وروى ثنا ذاك الوزير وروضا % % 25(@)(@@) % لعمري قد ساد الإمام محمد % فأخجل من وافى وأخمد من مضى % % 26(@)(@@) % رضيت عن الأيام منذ خدمته % % فكل ثياب لي به خلع الرضا % % 27(@)(@@) % يا سيدا حاز المعا % % لي طولها وعرضها % % 28(@)(@@) % لي جبة رفوت من % % ها البعض إذ لم أرضها % % 29(@)(@@) % فأعجب لها عتيقة % % دبرت منها بعضها % % 30(@)(@@) % وزير الشآم فدتك النفوس % % فلست عن الفضل بالمعرض % % PageV01P1143 31(@)(@@) % أتيتك في وقت غيظ فما % % خرجت عن المكرم الريض % % 32(@)(@@) % ومن كان في غيظه محسنا % فكيف يكون إذا مارضي % % 33(@)(@@) % أقلامك الحمر في أوراقك البيض % % مشهرات بتذهيب وتفضيض % % 34(@)(@@) % مسنونة الحد كم عدت مكارمها % % فرضا فقامت بمسنون ومفروض % % 35(@)(@@) % كالبرق 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms221# في يد غيث من عجائبها % % في لحظة العين إسراع بترويض % % 36(@)(@@) % قل للذي بدلت من إقباله % % وقبوله بالصد والاعراض % % 37(@)(@@) % واليت أمراضي علي وليتني % % أدري أحسنك ساخط أم راضي % % 38(@)(@@) % وملولة الأخلاق لما أن رأت % % أثر السقام بجسمي المنهاض % % 39(@)(@@) % قالت تغيرنا فقلت لها نعم % % أنا بالصدود وأنت بالاعراض % % 40(@)(@@) % قالت الناس فلان قد غدا % % بعد مس الفقر ذا مال عريض % % PageV01P1144 41(@)(@@) % لا وعليائك ما عندي ما % % يدخل الوزن سوى نظم القريض % % 42(@)(@@) % أهلا بوجه الأمير مقتبلا % لبشره بالسعود إيماض % % 43(@)(@@) % قالت لظامي الرجاء أنعمه % % أبشر فغيث النوال فياض % % 44(@)(@@) % وغادة في جفونها مرض % في قربه لي الشفا من المرض % % 45(@)(@@) % خوفني الناس سهم مقلتها % % وما دروا أن سهمها غرضي % % 46(@)(@@) % أزف الرحيل عن الشآم وأهله % % غيظا من الحال الذي لا يرتضى % % 47(@)(@@) % قالوا الزمام فقلت تبقى ناقتي % % فزمامها بيدي وما ضاق الفضا % % 48(@)(@@) % في كل يوم خلعة ملئت بها % % دنيا الأحبة خضرة وبياضا % % 49(@)(@@) % ما أنت الا الغيث علما أو ندى % % في كل وقت يستجد رياضا % % 50(@)(@@) % يا صاحبا نرجو به النفع في % % دنيا وفي آخرة أيضا % % PageV01P1145 51(@)(@@) % في السر والجهر بأحوالنا % % كم لك يا موسى يد بيضا % % 52(@)(@@) % قيل لي كنت واصلا لكريم % فاض حتي بأبيض الدرج فيضا % % 53(@)(@@) % أتراه من بعد ود ورفد % قطع الوصل قلت والدرج أيضا % % PageV01P1146 البحر : - 1(@)(@@) % تعشقته ظبي الكناس اذا عطا % % وعلقته ليث العرين اذا سطا % % 2(@)(@@) % وأسكنته عيني فزاد ملاحة % وقد راح فيها بالدموع مقرطا % % 3(@)(@@) % نصبت له من قبل اشراك هدبها % % فبات بها طول الدجى متورطا % % 4(@)(@@) % وخلفتها بالدمع شكرا لأنه % % اليها من الجنات فر وأهبطا % % 5(@)(@@) % وكم من عذول رام مني سلوة % وأمسى كقلبي بالهموم مخلطا % % 6(@)(@@) % فما زادني في الحب إلا تسرعا % % وما زادني في الصبر إلا تثبطا % % 7(@)(@@) % أأترك ذاك الريق كالشهد مخبرا % وأطلب صبرا ما أشر وأحبطا % % 8(@)(@@) % على يمين لا سلوت مهفهفا % ولا بت في رمان صدر مفرطا % % 9(@)(@@) % ولا حلت عنه فاتر اللحظ أغيدا % يخر له الغصن الرطيب اذا خطا % % 10(@)(@@) % تصيدني من شعره بحبائل % غدوت بها عما سواه مربطا % % PageV01P1147 11(@)(@@) % ولم أر مثل البند ما بين خصره % % وأردافه من جورها قد توسطا % % 12(@)(@@) % يطول 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms222# اذا لم ألقه عمر الدجى % % إلى أن أراه بالكواكب أشمطا % % 13(@)(@@) % ليال تولت ما أرق معاطفا % وعيشا تقضى ما ألذ وأغبطا % % 14(@)(@@) % رمى ثغره كاللؤلؤ الرطب ساطعا % على جيده زاهي النظام مسمطا % % 15(@)(@@) % فيا حامي الاسلام من كلماته % % بأجهد من حرب الاسود وأربطا % % 16(@)(@@) % أحاط به جيش السطور وانما % % أدار به الامر الذي كان أحوطا % % 17(@)(@@) % وساد البرايا كلما نال مصعدا % بأفق المعالي نال شافيه مهبطا % % 18(@)(@@) % وما أن رأينا مثل أنهار طرسه % % لدر معانيه مغاصا وملقطا % % 19(@)(@@) % تألق فيها كالكواكب لفظها % % فلم تشك عين في دجى النفس مخبطا % % 20(@)(@@) % و لا عيب فيه إن تأملت خلقه % % سوى أنه يطغي الخليقة بالعطا % % PageV01P1148 21(@)(@@) % على مثله فليعقد المرء خنصرا % لأنا رأيناه لدى الجود مفرطا % % 22(@)(@@) % نوال تلظى الغيث بالبرق حرقة % % لتقصيره عنه وبالرعد عيطا % % 23(@)(@@) % وبشر لدى العافين أحلى من المنى % % ورأي إلى العلياء أهدى من القطا % % 24(@)(@@) % من القوم فاتوا الناس سبقا إلى العلى % % ألم ترهم أندى أكفا وأبسطا % % 25(@)(@@) % كأن لهم فيها طريقا مفسرا % وعندهم فيها طريقا مخبطا % % 26(@)(@@) % اذا ابتدروا غايات لفظ رأيتهم % % من الروض أنشى أو من الريح أنشطا % % 27(@)(@@) % مطاعين في الهيجا مطاعين في الورى % % قريبين من رشد بعيدين من خطا % % 28(@)(@@) % كأنهم في السلم زهر وفي الوغى % % قتادة تأبى أن تلين فتحبطا % % 29(@)(@@) % أبى الله إلا أن يذل حسودهم % % ويرضون في كل الأمور ويسخطا % % 30(@)(@@) % اليك شهاب الدين جدت ركائب % كأن لها في ترب أرضك مسقطا % % PageV01P1149 31(@)(@@) % فداك بخيل لا يسود وانما % % قصاراه أن يخشى افتقارا ويقنطا % % 32(@)(@@) % تهتك لما ضن بالمال عرضه % % ألا إن جود المرء للعرض كالغطا % % 33(@)(@@) % وما أنت إلا البحر في كل حالة % نوالا وعلما ما أبر وأقسطا % % 34(@)(@@) % تجاوزت في الإنعام كعبا وحاتما % وطاولت في الإرغام عمرا وأحبطا % % 35(@)(@@) % وفقتهم إن كنت حقا مصححا % وكانوا حديثا في الأنام مغلطا % % 36(@)(@@) % وطال كما تختار قدرك في الورى % % لأبعد من شأو النجوم وأشحطا % % 37(@)(@@) % كأن ثريا الأفق كف تطاولت % % لتلقي له فرش الغمام وتبسطا % % 38(@)(@@) % اذا حاق خطب أو تطلع حادث % سلكت من الأقلام عضبا مسلطا % 39(@)(@@) % يراع يربى في سيول دوافق % % واغيال أسد لاتفر تحمطا % % 40(@)(@@) % فمن أجل هذا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms223# سر عافيه في الندى % % ومن أجل هذا سآء شانيه بالسطا % % PageV01P1150 41(@)(@@) % لك الله من حر يرى لي بره % وقد مد لي دهري الهموم ومططا % % 42(@)(@@) % وشيد لي بالذكر قدرا ورفعة % بعيد عليها أن تحول وتكشطا % % 43(@)(@@) % فخذ مدحا تنشي لك الروض يانعا % اذا شئت أو تبدي لك الوصف أرقطا % % 44(@)(@@) % اذا أشرقت في محفل ظن أهله % % سنا المشتري من ضوئها متقمطا % % 45(@)(@@) % وان كنت فيها قد تفردت بالثنا % % فإنك أيضا قد تفردت في العطا % % PageV01P1151 البحر : - 1(@)(@@) % مولاي قم للمعالي % % فللعداة هبوط % % 2(@)(@@) % حاشا رجا كل عاف % % أن يعتريه قنوط % % 3(@)(@@) % كم ضعف حال وقلب % % بالضعف منك منوط % % 4(@)(@@) % شهود علياك شهب % % وفي سواها سقوط % % PageV01P1152 البحر : - 1(@)(@@) % شكرا لها فرجية قد بيضت % % عيشي وعين الحاسد المتواطي % % 2(@)(@@) % جاءت ولم أسأل ولكن جاءني % % خياطها وعجزت عن قيراط % % 3(@)(@@) % وأريد جودا ثانيا ولطالما % % قد جدت لي قدما وللخياط % % PageV01P1153 البحر : - 1(@)(@@) % يا وزير المصرين كلا كفاه % % في مهماته الكبار وحاطه % % 2(@)(@@) % لو تفاخرت وابن شكر بمعنى % % جامع زدت في المعاني اغتباطه % % 3(@)(@@) % كنت تبدي فخاره برخام % % وفخار ابن شكر يبدي بلاطه % % 4(@)(@@) % وأغيد كل شيء منه يعجبني % % كأنما هو مخلوق على شرطي % % 5(@)(@@) % أجفانه السود لا تخطي اذا رشقت % % سهامها وسهام الليل لا تخطي % % 6(@)(@@) % نقطة خال ووجنة فعلا % % في اللهو لي بعد توبتي غبطه % % 7(@)(@@) % فيا لها توبة معشقة % % صرت عليها أقوال بالنقطه % % 8(@)(@@) % بروحي مشروط على الخد أسمر % دنا ووفى بعد التجنب والسخط % % 9(@)(@@) % وقال على اللثم اشترطنا فلا تزد % % فقبلته ألفا على ذلك الشرط % % 10(@)(@@) % لم أسع للعليا بخطو قاصر % لكن سعيت لها بحظ هابط % % PageV01P1154 11(@)(@@) % ألف السقوط فلو أردت كتابة % % للظاء منه كتبته بالساقط % % 12(@)(@@) % دع الخوض في الكلم الجاحظي % % ومع مقريء الشام فاقرأ بضبط % % 13(@)(@@) % اذا ما غرقت بمثل ابن بحر % % وجدت النجاة بمثل ابن شط % 14(@)(@@) % نظمت للصاحب المرجي % % رائية كالحباب يلقط % % 15(@)(@@) % نروم من بره نقوطا % والحكم للراء أن تنقط % % 16(@)(@@) % لي صنان أعاذك الله منه % % كم أواري إبطي به وأغطي % % 17(@)(@@) % فكأني في الناس لص مريب % % أتخفى وعملتي تحت إبطي % % 18(@)(@@) % حاكيت عرقوب الوعود % % وبت دون الخل لاقط % % 19(@)(@@) % فسقطت من عيني ندا % % ك ومن تعرقب فهو 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms224# ساقط % % 20(@)(@@) % يلوم العذول على أعين % خطائية حسنها في سطا % % PageV01P1155 21(@)(@@) % عذولي خذ لك عين الصواب % % ودع في الهوى لي عين الخطا % % 22(@)(@@) % وبروحي المشروط في الخد يقرا % % منه لحظ الكئيب أحسن خط % 23(@)(@@) % أعلن الشرط داعيا لهواه % % فغدت مهجتي جوابا لشرط % % 24(@)(@@) % بروحي كحلا الطرف لا بتكحل % مخططة لكن بغير خطوط % % 25(@)(@@) % تخير طرفي قدها العدل شاهدا % فألفيته أيضا أجل شروطي % % 26(@)(@@) % لقد جددت يا خجلي ذكري % % لشبع أو لري زاد غبطه % % 27(@)(@@) % كأنك لم تكن من ذا وهذا % % أكلت أوزة وشربت بطه % % 28(@)(@@) % أفنى جفاكم كثير دمعي % % لكن بقي في القليل نشطه % % 29(@)(@@) % قد كنت أروي عن ابن بحر % % فصرت أروي عن ابن نقطه % % PageV01P1156 البحر : - 1(@)(@@) % لا أترك الحب والعذال وعاظ % % ما دام في حفظه للقوم احفاظ % % 2(@)(@@) % يرتاض قلبي إذا ما الحب خامره % % فخل عاذله في الحب يغتاظ % % 3(@)(@@) % رووا الشجون على سمعي فاني من % % قوم هم لحديث الشجو حفاظ % % 4(@)(@@) % وانظر لالحاظ من أهوى وقل لي عن % % علم أتلك ظبا أم تلك الحاظ % % 5(@)(@@) % أعيذ بالكهف ألحاظا مناقضة % تخالهن رقودا وهي ايقاظ % % 6(@)(@@) % ومبسما لبهي الدر متسقا % كأنه لبهاء الدين ألفاظ % % 7(@)(@@) % ذوالبيت نظما ومجدا قد سخا وذكا % % حتى شتا حوله الطلاب أو قاظوا % % 8(@)(@@) % لله ما مدحه علياء قد نسبت % % فهي الصميم ونظم القوم أوشاظ % % 9(@)(@@) % ود العدا منه ما فاض العروض بها % % لو أنهم بنفوس الغيظ قد فاظوا % % 10(@)(@@) % مزجت يا بحر بحريها فذاك وذا % % عذب على أنه للدر لفاظ % % PageV01P1157 11(@)(@@) % مقدس بيتها حتى الخليل به % % جذلان والباحث الوزان مغتاظ % % 12(@)(@@) % قالت لنظم مجاريها وما ظلمت % % ما أنت حمل فان الحمل نهاظ % % 13(@)(@@) % وزاد ذكر علي مجدها فلها % % مع رقة القول بالانداد اغلاظ % % 14(@)(@@) % ونطقتني ببكر هام سامعها % % حتى كأن انتصاب السمع انعاظ % % 15(@)(@@) % تجنبت لك حوشي الكلام فما % % فيها وحوشيت حنياظ ولغماظ % % 16(@)(@@) % لا زلت تملي وتملا الحلو من كلم % بذكرهن لسان الذوق لماظ % % PageV01P1158 البحر : - 1(@)(@@) % متعوني عنكم بمسموع وعد % إن بخلتم علي بالملحوظ % % 2(@)(@@) % وأغيثوا قلبا رقيقا يقاسي % % من ذوي اللوم فظ غليظ % % 3(@)(@@) % لفظت أذني الملام عليكم % % فهو فيها من أكره الملفوظ % % 4(@)(@@) % حفظ عهد يضوع في الحب % % وعجيب لضائع محفوظ 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms225# % % PageV01P1159 البحر : - 1(@)(@@) % رعى الله أوقاتا تقضت بصاحب % موازين لفظي في الولاء بحفظه % % 2(@)(@@) % إذ لم تدر كاس المدامة بيننا % % أديرت كؤوس بين لفظي ولفظه % % PageV01P1160 البحر : - 1(@)(@@) % مسموع لفظك في القلوب ممكن % % في الحب فوق تمكن الملحوظ % % 2(@)(@@) % حفظت فوائده وضاع نسيمه % % فاعجب له من ضائع محفوظ % % PageV01P1161 البحر : - 1(@)(@@) % أحبك يا فريد الوقت حبا % % تقسم بين معتقدي ولفظي % % 2(@)(@@) % وليس بنافع هذا ولا ذا % % إذا كان المحب قليل حظ % PageV01P1162 البحر : - 1(@)(@@) % يادار جيرتنا بسفح الأجرع % % ذكرتك أفواه الغيوث الهمع % % 2(@)(@@) % و كستك أنواء الربيع مطارفا % موشية بسنا البروق اللمع % % 3(@)(@@) % تتحلب الأنوار فيك على الربى % % بسحائب تحنو حنو المرضع % % 4(@)(@@) % فلكل قطرة وابل فم زهرة % مفترة عن باسم متضوع % % 5(@)(@@) % تزهى لوامع ربعها وربيعها % % بمنور في الحالتين منوع % % 6(@)(@@) % فعسى يعود الحي فيك كما بدا % % في خير مرتاد وأخصب مربع % % 7(@)(@@) % عهدي بسفحك مرتعا لأوانس % كم في محاسنها لنا من مرتع % % 8(@)(@@) % من كل دائرة القناع على سنا % بدر يراغم بدر كل مقنع % % 9(@)(@@) % شق الاسى قلبي الصريع فياله % % بيتا أبت سكناه غير مصرع % % 10(@)(@@) % بالنازعات ومهجتي عوذتها % % وحجبتها بالمرسلات وأدمعي % % PageV01P1163 11(@)(@@) % آها لعهد الرقمتين وعهدها % % لوأن عهدهما قريب المرجع % % 12(@)(@@) % و لطيفها كم هاج لوعة بينها % % فالويل إن أهجع وإن لم أهجع % % 13(@)(@@) % بانت سعاد فليت يوم رحيلها % % فسح اللقا فلثمت كعب مودعي % % 14(@)(@@) % وضممت بدر ركابها فعساه أن % % تعديه رقة قلبي المتوجع % % 15(@)(@@) % إني وإن لم أقض نحبي بعدها % % فليقضين بكاي حق الأربع % % 16(@)(@@) % ولأختمن بموضع التقبيل ما % % ضم الثرى من قلبي المستودع % % 17(@)(@@) % و أحمل الهم الذي حملته % % نجبا تقيس لي الفلا بالأذرع % % 18(@)(@@) % من كل حرف وفقها للساكني % % تلك الربوع وعطفها للموضع % % 19(@)(@@) % مشتاقة تسري بمشتاق كما % % رجع المدامع وجنة المسترجع % % 20(@)(@@) % كادت من الذكرى تطيرنسوعها % % وتقوم من صدري حواني الأضلع % % PageV01P1164 21(@)(@@) % و لقد يذكرني حنين سواجع % بالقلب كم هاجت على غصن معي % % 22(@)(@@) % شتان ما بيني وبين حمامة % صدحت فمن مسترجع ومرجع % % 23(@)(@@) % غصني بعيد عن يدي وغصنها % % ضمت عليه أنامل المستمتع % % 24(@)(@@) % لا طوق لي بالصبر عنه وطوقها % % بالزهر بين مدبج وموشع % % 25(@)(@@) % إن لم تعرني للحنين جناحها % % فلقد أعرت حدا الركائب مسمعي % % 26(@)(@@) % يطفو بنا عند 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms226# النجود مديدها % % طلاعة ويسيل عند البلقع % % 27(@)(@@) % حتى إذا شمنا لطيبة معلما % عجلت قبل الحج طيب تمتعي % % 28(@)(@@) % و نزلت عن ظهر المطية لاثما % وجه الثرى فرحا بنثر الأدمع % % 29(@)(@@) % و إذا المطي بنا بلغن محمدا % فلها رعاية خير حق قد رعي % % 30(@)(@@) % و لها بآثار المناسم في السرى % % شرف على شرف البدور الطلع % % PageV01P1165 31(@)(@@) % يا زائد الأشواق زائر قبره % % سلم على خير البرية يسمع % % 32(@)(@@) % و الجأ إلى الحرم الذي جبريل من % % زواره من ساجدين وركع % % 33(@)(@@) % بين الملائك والملوك تزاحم % من حول منهلة اللذيذ المكرع % % 34(@)(@@) % فوفودها من أرضها وسمائها % % في مطمح يسعى اليه ومطمع % % 35(@)(@@) % تدعو منازله سراة وفوده % % لجناب من في ليلة الاسرا دعي % % 36(@)(@@) % حتى تقلد بالرسالة حافظا % ضواع نشر الفضل غير مضيع % % 37(@)(@@) % وتر يقال له غدا قل يستمع % % يا خير مشفوع وخير مشفع % % 38(@)(@@) % كان الورى في حيرة حتى أتى % % بجلي أخبار دعاها من يعي % % 39(@)(@@) % شرع الهدى ووصفت شارع فضله % % أكرم بفضلي مشرع ومشرع % % 40(@)(@@) % من سفح عدنان التي شرفت به % % مع ذلك الشرف القديم المهيع % % PageV01P1166 41(@)(@@) % بطباعه يزكو فكيف بطابع % لثبوت أعناء على المتطبع % % 42(@)(@@) % ألف الندى حتى بدا في كفه % % نبع الزلال فياله من منبع % % 43(@)(@@) % و البدر شق لقربه متهللا % والجذع حن لبعده بتفجع % % 44(@)(@@) % و الشمس شاهدة بأن غمامة % كانت تظلل من سواء المطلع % % 45(@)(@@) % شهدت بإمكان له ومكانة % % وعلى كمثل الشمس فاشهد أودع % % 46(@)(@@) % و الوصف ملتمع النجوم يجل أن % % يحصى وان شئت الحديث فألمع % % 47(@)(@@) % و اذكر ببدر طلعة نبوية % من مفرد يسمو ابن عشر واربع % % 48(@)(@@) % ما البدر في كبد السما كسناه في % % قلب الخميس ولا بصدر المجمع % % 49(@)(@@) % تفدي البدور بيوم بدر وجهه % % ما بين معشره البدور الطلع % % 50(@)(@@) % المعرقين سماحة وحماسة % يوم الفخار دعوا ويوم المفزع % % PageV01P1167 51(@)(@@) % من كل مفترس الليوث بثعلب % % من رمحه في صدر كل مسبع % % 52(@)(@@) % و قضيب سيف ان يهز تساقطت % % ثمرات هام كان منه لتبع % % 53(@)(@@) % ورثوا الشجاعة والعلى يروونها % % قرشية عن غالب ومجمع % % 54(@)(@@) % و به اهتدوا فتتابعوا في نصره % % من طائع وافى اليه ومهطع % % 55(@)(@@) % حتى اذا صلى الحسام بطوعهم % % صلت رؤوس عدى بغير تطوع 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms227# % % 56(@)(@@) % حمدوا الوغى في حب أحمدهم فما % % يتفيأون سوى الطوال الشرع % % 57(@)(@@) % هذا وكانوا يتقون به اذا % % حمي الوطيس فيتقون بأشجع % % 58(@)(@@) % بأشد من شهد الوغى وأرق من % % وقعت عواطف حلمه في موقع % % 59(@)(@@) % بكليل جفن عن معائب مخطئ % % وحديد سيف في فؤاد مدرع % % 60(@)(@@) % بالمجتدي في يسره وخصاصة % % والمجتلي في حلة ومرفع % % PageV01P1168 61(@)(@@) % ذو المعجزات الباقيات وحسبه % % سور مسورة تصد المدعي % % 62(@)(@@) % هديت قروم ذوي الفصاحة قبلها % % وتقاعسوا عنها لأول منزع % % 63(@)(@@) % كم مدع نظما يحاول حيه % % في سورة منها فيسلى مدعي % % 64(@)(@@) % قال الكلاميون صرفة خاطر % % قلنا ونثره كوكب متشعشع % % 65(@)(@@) % يا سيد الخلق الذي مدحته من % % آي الكتاب فواصل لم تقطع % % 66(@)(@@) % ماذا عسى المدح الطهور يدير من % % كأس الثنا بعد الكتاب المترع % % 67(@)(@@) % بعد الحواميم التي بثنائها % % هبطت اليك من المحل الأرفع % % 68(@)(@@) % من كل حرف عن سواك بمدحها % % ورقاء ذات تعزز وتمنع % % 69(@)(@@) % أرجو لفهمي بامتداحك يقظة % % من غفلتي وشهادة في مصرعي % % 70(@)(@@) % و اليك أشكو صدر حال ضيق % بالمؤلمات وحال هم مولع % % PageV01P1169 71(@)(@@) % وتذللا في الخلق بعد تعزز % % وتحيرا في الأمر قبل توقع % % 72(@)(@@) % حتى كأن العقل ليس بعاقل % إياك أن تعيى بأمر مفضع % % 73(@)(@@) % إن تستبين لك حيلة في الأمر لا % % تعجز وإن لم تستبن لا نجزع % % 74(@)(@@) % و لقد أراعي الصبر فيما أشتكي % % من مؤلم والصبر بعض تجوعي % % 75(@)(@@) % شيبت حياتي ثم شابت لمتي % % في غير ذخر للمعاد مجمع % % 76(@)(@@) % فالرأس مشتعل بشيب أبيض % والقلب مشتعل بشيب أسفع % % 77(@)(@@) % ومع المشيب ففي من سن الصبى % % جهل وضرس غواية لم يقلع % % 78(@)(@@) % أواه من سن وأسنان مضت % % في فعلي العاصي وقولي الطيع % % 79(@)(@@) % سن علا كبرا وسن قد هوى % % تلفا ولسن إن يؤخر يفزع % % 80(@)(@@) % و تشاغلي فيما يضر وحسبه % % لو لم يضر بأيه لم ينفع % % PageV01P1170 81(@)(@@) % همان من دنيا وآخرة فيا % % للحيرتين بمعضل وبمضلع % % 82(@)(@@) % و بلية الانسان منه وانما % % بك يا شفيع المذنبين تشفعي % % 83(@)(@@) % سارت اليك صلاة ربك ما سرت % % لحماك ناجية المحب الموضع % % 84(@)(@@) % و توسلت بك مدحة سيارة % سير النجوم من ابتداء المطلع % % 85(@)(@@) % و نظيمة من طيب الكلم الذي % % لسوى مقامك في الورى لم ترفع % % 86(@)(@@) % عوذت من 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms228# عين الحسود عيونها % % من حرف مطلعها بحرف المقطع % % 87(@)(@@) % و تخذتها عينا ترويني غدا % % وترى لذي الدارين منجا منجعي % % 88(@)(@@) % إن كنت حسانا بمدحك نائبا % فسناك أرشده وقال لي اتبع % % 89(@)(@@) % سجعت لك المداح في طرق الهدى % % والمكرمات ومن تطوق يسجع % % PageV01P1171 البحر : - 1(@)(@@) % أجبت منادي الحب من قبل ما دعا % % فإن شئتما لوما وإن شئتما دعا % % 2(@)(@@) % لي الله قلبا صير الوجد شرعة % وجفنا قريحا صير الدمع مشرعا % % 3(@)(@@) % كنانة لحظ خلفتني من الهنا % % قصيا وفكري للهموم مجمعا % % 4(@)(@@) % وسالف عهد بالعقيق ذكرته % % فعاد بدر المدمعين مرصعا % % 5(@)(@@) % يخوفني بالسقم لاح وليت من % % عناني أبقى في للسقم موضعا % % 6(@)(@@) % بليت فلو رامتني العين ما رأت % % ولو أن فكري عارض السمع ما وعى % % 7(@)(@@) % ورب زمان كان لي فيه مالك % حبيب سعى منه الفراق بما سعى % % 8(@)(@@) % فلما تفرقنا كأني ومالكي % % لطول اجتماع لم نبت ليلة معا % % 9(@)(@@) % من الغيد لو كان الملاح قصيدة % % لكان سنا خديه للشمس مطلعا % % 10(@)(@@) % أدار على الدمع كأسا وطالما % % أدار علي البابلي المشعشعا % % PageV01P1172 11(@)(@@) % كأن التلاقي كان وفرا تسرعت % % أيادي ابن شاد فيه حتى تضعضعا % % 12(@)(@@) % إذا لم يكن للغيث في العام نجعة % فحسبك بالملك المؤيد منجعا % % 13(@)(@@) % مليك أعاد الشعر سوقا بدهره % % فجئت إلى أبوابه متبضعا % % 14(@)(@@) % ووالله لولا باعث من مديحه % % لأصبح بيت الشعر عندي بلقعا % % 15(@)(@@) % أتعذل أقلام المدائح إن غدت % % له سجدا لا للأنام وركعا % % 16(@)(@@) % فدت طلعة البدر المنير أبا الفدا % % وإن كان أعلى من فداها وأرفعا % % 17(@)(@@) % ألم تر أنا قد سلونا بأرضه % % مرادا لنا في أرض مصر ومرتعا % % 18(@)(@@) % إذا ابن تقي الدين جاد نباته % % علينا فلا مدت يد النيل أصبعا % % 19(@)(@@) % أما والذي أنشى الغمام وكفه % % فجاد وقد مل السحاب فأقلعا % % 20(@)(@@) % لقد سمعت للأولين فضائل % ولكن هذا الفضل ما جاز مسمعا % % PageV01P1173 21(@)(@@) % سحاب كما ترجى السحائب حفلا % وبأس كما تنضي الصواعق لمعا % % 22(@)(@@) % وعلم ملأنا صحفه من فنونه % % فكانت على الأيام بردا موشعا % % 23(@)(@@) % وذكر له في كل قلب محبة % على ابن علي يعذر المتشيعا % % 24(@)(@@) % له الله ما أزكاه في الملك نبعة % % وأعذب في سقيا المكارم منبعا % % 25(@)(@@) % هو الملك أغنى ماء وجهي 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms229# وصانه % % فإن تقصر الامداح لم يقصر الدعا % % 26(@)(@@) % غدت كل عام لي اليه وفادة % فيا حبذا من أجل لقياه كل عام % % 27(@)(@@) % تطوقت تطويق الحمام بجوده % % فلا عجب لي أن أحوم وأسجعا % % 28(@)(@@) % قضى الله إلا أن يقوم لقاصد % بفرض فان لم يلق فرضا تطوعا % % 29(@)(@@) % حلفت لقد ضاع الثنا عند غيره % % ضياعا وأما عنده فتضوعا % % PageV01P1174 البحر : - 1(@)(@@) % سرى طيفها حيث العواذل هجع % % فنم علينا نشره المتضوع % % 2(@)(@@) % وبات يعاطيني الاحاديث في دجى % كأن الثريا فيه كأس مرصع % % 3(@)(@@) % أجيراننا حيي الربيع دياركم % % وإن لم يكن فيها لطرفي مربع % % 4(@)(@@) % شكوت إلى سفح النقا طول نأيكم % % وسفح النقا بالنأي مثلي مروع % % 5(@)(@@) % ولا بد من شكوى إلى ذي مروءة % يواسيك أو يسليك أو يتوجع % % 6(@)(@@) % فديت حبيبا قد خلا عنه ناظري % % ولم يخل منه في فؤادي موضع % % 7(@)(@@) % مقيم بأكناف الغضا وهي مهجة % وإلا بوادي المنحني وهي أضلع % % 8(@)(@@) % أطال حجاز الصد بيني وبينه % % فمقلته الحورا ودمعي ينبع % % 9(@)(@@) % لئن عرضت من دون رؤيته الفلا % % فيا رب روض ضمنا فيه مجمع % % 10(@)(@@) % محل ترى فيه جوامع لذة % بها تخطب الأطيار والقضب تركع % % PageV01P1175 11(@)(@@) % قرأنا به نحو الهنا فملابس % % تجر وأيد بالمدامة ترفع % % 12(@)(@@) % وقد أمنتنا دولة شادوية % % فما نختشي اللأوا ولا نتخشع % % 13(@)(@@) % مدائحها تمحو الأثام ورفدها % % يعوض من وفر الغنى ما نضيع % % 14(@)(@@) % رعى الله أيام المؤيد إننا % % وجدنا بها أهل المقاصد قد رعوا % % 15(@)(@@) % مليك له في الجود صنع تأنقت % % معانيه حتى خلته يتصنع % % 16(@)(@@) % وعلياء لو أنا وضعنا حديثها % % وجدنا سناها فوق ما كان يوضع % % 17(@)(@@) % مذال الغنى لو حاولت يد سارق % % خزائنه ما كان في الشرع يقطع % % 18(@)(@@) % أرانا طباق المال والمجد في الورى % % فذلك مبذول وهذا ممنع % % 19(@)(@@) % وجانس ما بين القراءة والقرى % % فللجود منه والاجادة مطلع % % 20(@)(@@) % توقد ذهنا واستفاض مكارما % فأعلم أن الشهب بالغيث تهمع % % PageV01P1176 21(@)(@@) % وصان فجاج الملك عدلا وهيبة % فلا جانب إلا من الروض مرتع % % 22(@)(@@) % عزائم وضاح المحامد أروع % اذا قيل وضاح المحامد أروع % % 23(@)(@@) % تفرق أحمال النضار يمينه % % لما راح بالسمر الطول يجمع % % 24(@)(@@) % ولا عيب في أخلاقه غير أنه % % اذا عذلوه في الندى ليس يرجع % % 25(@)(@@) % له 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms230# كل يوم في السيادة والعلى % % أحاديث تملي المادحين فتبدع % % 26(@)(@@) % اذا دعت الحرب العوان حسامه % % جلا أفقها والرمح للسن يقرع % % 27(@)(@@) % وإن مشت الآمال نحو جنابه % % رأت جود كفيه لها كيف يهرع % % 28(@)(@@) % فلا تفتخر من نيل مصر أصابع % % فما النيل إلا من يمينك اصبع % % 29(@)(@@) % أيا ملكا لما دعته ضراعتي % % تيقنت أن الدهر لي سوف يضرع % % 30(@)(@@) % قصدتك ظمآنا فجدت بزاخر % أشق كما قد قيل فيه وأذرع % % PageV01P1177 31(@)(@@) % وفي بعض ما أسديت قنع وانما % % فتى كنت مرمى ظنه ليس يقنع % % 32(@)(@@) % لك الله ما أزكى وأشرف همة % وأحسن في العلياء ما تتنوع % % 33(@)(@@) % مديحك فرض لازم لي دينه % % ومدح بني العلياء سواك تطوع % % PageV01P1178 البحر : - 1(@)(@@) % لا وعيش اللقاء ما لدموعي % % وقفة بعد وقفة التوديع % % 2(@)(@@) % يا لها باللقا ليال تولت % % باصطباري ومهجتي وضلوعي % % 3(@)(@@) % وربوعا كانت من الانس تزهو % % فرعى الله عهد تلك الربوع % % 4(@)(@@) % ونجوما من الأحبة سارت % % يا ترى هل لسيرها من رجوع % % 5(@)(@@) % كل حسناء صيرت بيت قلبي % % بيت شعر يقام بالتقطيع % % 6(@)(@@) % مثلما مثلوا صنيع ابن أيو % % ب بجود البرامك المصنوع % % 7(@)(@@) % ما سمعنا للأفضل الفرد ثان % حبذا في ثنائنا من بديع % % 8(@)(@@) % شادوي المقام يأوي علاه % % بمحل على السماك رفيع % % 9(@)(@@) % ذو ندى كامل ومجد مديد % ووفا وافر وعز سريع % % 10(@)(@@) % وسجايا كالروض تبسم بالزه % % ر وباس يبلي الظبا بالنجيع % % PageV01P1179 11(@)(@@) % من ملوك تفقهوا في حمى المل % % ك فرد والأصل فضل الفروع % % 12(@)(@@) % ونضوا في حماه هيبة ملك % يسترد العاصي مرد المطيع % % 13(@)(@@) % يا أخا العلم والمكارم والبا % % س وجمع الثنا وبث الصنيع % % 14(@)(@@) % يا مليكا سقى نداه نباتا % زاكيا زرع حمده في الزروع % % 15(@)(@@) % وصلتني النعمى ولم تسر عيسي % % بفلاة ولم تشد نسوعي % % 16(@)(@@) % كرما منك سوف تتلو التواري % % خ ثناه على رؤوس الجميع % % 17(@)(@@) % لك مني الدعا ونظم القوافي % % فأعرها لا زلت فكر السميع % % 18(@)(@@) % وابق للمادحين منصوب ذكر % % بحديث المكارم المرفوع % % PageV01P1180 البحر : - 1(@)(@@) % هددتموا بالضنا من ليس يرتدع % % هيهات لم يبق فيه للضنا طمع % % 2(@)(@@) % صبا تحجب عن عذالة سقما % فاعجب لمن بعوادي الضر ينتفع % % 3(@)(@@) % أحبابنا كم أقاسي بعدكم جزعا % % لو كان ينفعني من بعدكم جزع % % 4(@)(@@) % حملتم العين يا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms231# أشهى العيان لها % % من أدمع وسهاد فوق ما تسع % % 5(@)(@@) % ماء من الجفن يغني روح واحدة % كأنما السم حقا فيه منتقع % % 6(@)(@@) % يا منعمين بطيف بعد فرقتهم % % دعوا التهكم أين الأعين الهجع % % 7(@)(@@) % كلفتموني مواريث الذين قضوا % % من الغرام فهل للوصل مرتجع % % 8(@)(@@) % وعاذل فيكم تعبان قلت له % % ان كنت أعمى فاني لست أستمع % % 9(@)(@@) % يخادع السمع والاحشاء قائلة % غيري بأكثر هذا الناس ينخدع % % 10(@)(@@) % ليت الثغور جلت برقا له فرأى % % سحائب الدمع وجدا كيف تنهمع % % PageV01P1181 11(@)(@@) % ورب ظالمة ما عند مقلتها % % لفارش الخد إلا السيف والنطع % % 12(@)(@@) % يشكو كما يتشكى خصرها سغبا % وجاره الردف قد أودى به الشبع % % 13(@)(@@) % كأنما ينقل البين المشتت لها % % دمي فتحمر خداها وأمتقع % % 14(@)(@@) % حثت لوشك النوى عيسا تحب سرى % % لكنها للأسى بين الحشا تضع % % 15(@)(@@) % وخادعتني من عرف الحمى سحرا % بالريح والعاشق المسكين ينخدع % % 16(@)(@@) % كفى دلالك إن الصبر طاوعني % % وان قلبي من كفيك منتزع % % 17(@)(@@) % لا تبتغي كلماتي اليوم في غزل % % فهن لابن علي في الثنا شيع % % 18(@)(@@) % والمانح الجزل لا من ولا ملك % % والمانع السرح لا خوف ولا جزع % % 19(@)(@@) % علا عن المدح حتى ما يهش له % % كأنما المدح في أوصافه قزع % % 20(@)(@@) % يمم حماه إذا ما خفت ضائعة % فبابه بالندى كالصدر متسع % % PageV01P1182 21(@)(@@) % وقل لحاسده المغرور مت كمدا % ذاك الجناب صفاه ليس ينصدع % % 22(@)(@@) % هيا لك الكرم الطائي مفترق % % للناس والسؤدد القيسي مجتمع % % 23(@)(@@) % باب لبذل اللهى في كل نائبة % % مجرب وندى في الجدب منتجع % % 24(@)(@@) % وسيد بالمعالي الغر مؤتلف % بالحمد مشتغل بالمجد مطلع % % 25(@)(@@) % جم المناقب يلقى العسر من يده % % في المحل ما لقيت من علمه البدع % % 26(@)(@@) % لو لم يكن نجمه كالسيف منصلتا % ما راح كل قرين وهو منقطع % % 27(@)(@@) % يهوى المعالي وابكار الكلام فما % % يزال يفرع أعلاها ويفترع % % 28(@)(@@) % فتوة وفتاو لا نظير لها % % كأنه في الندى والحكم مخترع % % 29(@)(@@) % وأنعم قربت عن همة بعدت % % كالشمس يدنو سناها حين ترتفع % % 30(@)(@@) % لا عيب في لفظه المنظوم جوهره % % إلا نوافث فيها للنهى خدع % % PageV01P1183 31(@)(@@) % جن الغمام الذي حاكى مكارمه % % أما تراه على وجه الثرى يقع % % 32(@)(@@) % وقالت السمر من يلقى يراعته % % منا فأمست كما قد قيل 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms232# تقترع % % 33(@)(@@) % صحت امامه أقلام براحته % % فأصبحت بخبير الخير تلتفع % % 34(@)(@@) % تسود نقسا وتجلو كل داجية % فهل هي الليل داج أم هي الشمع % % 35(@)(@@) % يا أشرف الخلق أخلاقا مطهرة % وأفضل الناس إن طاروا وان وقعوا % % 36(@)(@@) % ان الجماهير قد ذلت رقابهم % إلى كمالك واستوفاهم الهلع % % 37(@)(@@) % لا تسمعن حديث القوم في شرف % حديث غيرك موضوع ومتضع % % 38(@)(@@) % وعصبة تدعي علما وقد جهلت % % أنشقت آنافها نكباء تجتدع % % 39(@)(@@) % حاكوك شخصا ولكن ما حكوا رشدا % % ان المساجد تحكي شكلها البيع % % 40(@)(@@) % وجحفل لجب تطفو غواربه % % كأنما تبع في اثره تبع % % PageV01P1184 41(@)(@@) % ردت رداه سهام من دعائك لا % % بيض حداد ولا خطية شرع % % 42(@)(@@) % يا ابن الكرام الأولى في كل مكرمة % إن فاخروا فخروا أو قارعوا قرعوا % % 43(@)(@@) % لا في اليسار مفاريح اذا بلغوا % % غايات مجد ولا في أزمة جزع % % 44(@)(@@) % كم نال سعيهمو جد فما بطروا % % فيه وكم نالهم دهر فما خضعوا % % 45(@)(@@) % من كل أروع للأقلام في يده % % وللظبا في الوغى والسلم مطلع % % 46(@)(@@) % تزداد والرمح في جنبيه سورته % % كأنما زيد في أضلاعه ضلع % % 47(@)(@@) % وملجأ العلم في أوطانه لفتى % للجود والبأس فيه الشهد واللسع % % 48(@)(@@) % من مبلغ عني الأهل الذين نأوا % % أني نزيلك لا فقر ولا فزع % % 49(@)(@@) % مطوق بهبات ساجع بثنا % ينسي الأوائل ماجادوا وما سجعوا % % 50(@)(@@) % لي بالجنا الحلو في ناديك مرتفق % وبالندى الغمر مصطاف ومرتبع % % PageV01P1185 51(@)(@@) % نعم الفتى أنت لا تحنو على نشب % كفاه يوما ولا تبقي ولا تدع % % 52(@)(@@) % أجديت حالي ولم تسمع شكايته % % من بعد ماضن أقوام وقد سمعوا % % 53(@)(@@) % وجاد فكري بنوع من مدائحه % % وللمساكين أيضا بالندى ولع % % 54(@)(@@) % بحثت عن وصفك الزاكي فنائله % % مسلم ومدى علياك ممتنع % % 55(@)(@@) % مازلت ترتجع النعمى الي إلى % % ان خلت ان شباب العمر مرتجع % % 56(@)(@@) % وقلت للخاطبي مدحي بذكر ندى % % غيري بأكثر هذا الناس ينخدع % % PageV01P1186 البحر : - 1(@)(@@) % كف الملامة عن حشا المتوجع % % واترك مضرته اذا لم تنفع % % 2(@)(@@) % أتخال اني للملامة سامع % % لا والذي قد سد عنها مسمعي % % 3(@)(@@) % والنازعات فانها من مهجتي % % والمرسلات فانها من ادمعي % % 4(@)(@@) % لا كان نشر العاذلين بضائع % % عندي ولا عهد الهوى بمضيع % % 5(@)(@@) % أنا مستدل بالسقام على الأسى % % فا استطعت بفقه 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms233# عذلك فامنع % % 6(@)(@@) % ما العذل قرآن ولا أنا جلمد % % فأظل منه كخاشع متصدع % % 7(@)(@@) % بأبي غزالا ضاق بي وسع الفضا % % في الحب وهو من الحشا في مربع % % 8(@)(@@) % صرع الأسود بمقلة نجلاء ان % % تلمح صوارمها بجفن تقطع % % 9(@)(@@) % القلب موضعه وقد عطفت له % % جمل الاسى فأصخ لعطف الموضع % % 10(@)(@@) % وارفض ملامي في البكى متواليا % واقرأ على أهل المحبة مصرعي % % PageV01P1187 11(@)(@@) % لزم الاسى قلبي كما لزم الثنا % % قاضي القضاة أبا المناقب اجمع % % 12(@)(@@) % ذاك الذي حكمت علاه بعلمها % % لا بالحظوظ ولا بقول المدعي % % 13(@)(@@) % متفرد قال الزمان لفضله % % فوفى المقال وصح عقد المجمع % % 14(@)(@@) % من ذا يضاهي الشمس حسن فضيلة % % وبها قوام العالم المتنوع % % 15(@)(@@) % لله أي فضائل مأثورة % % يوم الفخار وأي لفظ مبدع % % 16(@)(@@) % وسداد رأي لا تخاف صفاته % % لكن متى يخدعه عاف يخدع % % 17(@)(@@) % درت به حلب لطالب رسلها % % وحنت على العافي حنو المرضع % % 18(@)(@@) % بشراك ياوطنا تقادم عهده % % بحمى العواصم لا بسفح الاجرع % % 19(@)(@@) % هبطت بمغناك العلوم وانما % % هبطت اليك من المحل الارفع % % 20(@)(@@) % وغدا مقرك بالفضائل واللهى % % ماضي الشريعة مستفاض المشرع % % PageV01P1188 21(@)(@@) % زاهى على غرر البلاد وأهلها % % بأغر وضاح الخلايق أروع % % 22(@)(@@) % أضحت معرضة كرائم ماله % % فلو انتحاها سارق لم يقطع % % 23(@)(@@) % نعم الملاذ لطالبيه فطالب % % علما وطالب نائل متبرع % % 24(@)(@@) % ما البحر إلا علمه ونواله % % لو كان طافي الدر حلو المكرع % % 25(@)(@@) % لو تنطق الشهباء قال مقامها % % قل يا محمد كل فخر يسمع % % 26(@)(@@) % يا قدوة العلماء عش مترقيا % واخفض بأمرك ما تحاول وارفع % % 27(@)(@@) % قسما لقد رجعت بي الدنيا إلى % % مغناك بعد النأي أحسن مرجع % % 28(@)(@@) % رد الرجاء الي قربك حبذا % % شمس ترد من الرجاء ليوشع % % 29(@)(@@) % لله كم لك من يد مأثورة % % عندي وكم لك من ندى متسرع % % 30(@)(@@) % قالت لانعمك الغزار قصائدي % % هذا نباتي المدائح فازرعي % % PageV01P1189 البحر : - 1(@)(@@) % أما ونجوم الحسن أعيى طلوعها % % لقد بليت أجسادنا وربوعها % % 2(@)(@@) % لقد سيرت تلك النجوم يد النوى % % فهلا كتسيار النجوم رجوعها % % 3(@)(@@) % تركت جمادى كل عين قريرة % % وقد جر أذيال السيول ربيعها % % 4(@)(@@) % وأعددت أجفاني منازل للبكى % % فولى وما يدري الطريق هجوعها % % 5(@)(@@) % فدى للغواني مسلم فتكت به % % وحل لهاتيك العيون صريعها % % 6(@)(@@) % اساكنة بالجزع أن مدامعي 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms234# % % سيرضيك منها بالعقيق نجيعها % % 7(@)(@@) % أبت لي دموعي أن أماكس في الهوى % % فحسنك يشريها وجفني يبيعها % % 8(@)(@@) % وأسهرت أجفاني وان كنت ساهرا % % ومحترقا في الغيد لولا شموعها % % 9(@)(@@) % لي الله نفسا لا يخف نزاعها % % اليك وروحا لا يكف نزوعها % % 10(@)(@@) % وأغيد فتان اللواحظ فاتك % % يروق حشا عشاقه ويروعها % % PageV01P1190 11(@)(@@) % سعى بالحميا في نشاوى تهافتت % % عليها بأيد ما تكاد تطيعها % % 12(@)(@@) % فيالك من ألباب قوم تنكرت % % مصانعها منها وأقوت ربوعها % % 13(@)(@@) % أخادع آمال بكأس وشادن % وقد يقتضي آمال نفس خدوعها % % 14(@)(@@) % وقد أشتكي همي إلى أريحية % % ولوعي بأكناف الحمى وولوعها % % 15(@)(@@) % تكاد من الذكرى اذا ما تننفست % % تناثر من شجو عليها نسوعها % % 16(@)(@@) % وتسعدني الورقآء منها نواحها % % بغصن ومن أجفان عيني هموعها % % 17(@)(@@) % تطوقت من جود ابن يحيى كطوقها % % فلله أطواق اللهى وسجوعها % % 18(@)(@@) % أخو الكلمات الغر تندي غمامها % % وينفح رياها وتزكو زروعها % % 19(@)(@@) % وذو الدوحة العليآء أرست أصولها % % وطابت مجانيها وطالت فر وعها % % 20(@)(@@) % بحور اللهى والعلم فيهم بسيطها % % وكاملها منهم وعنهم سريعها % % PageV01P1191 21(@)(@@) % اذا أسرة الفاروق قامت لمفخر % أقرت لعلياها السراة جميعها % % 22(@)(@@) % تصول وتحمي شرعة نبوية % فأسيافها منهم ومنهم دروعها % % 23(@)(@@) % ألم تر علياهم بطلعة أحمد % كما نض عن عبق الرياض صنيعها % % 24(@)(@@) % على يده البيضاء آي يراعة % ينعم جانيها ويشقى لسيعها % % 25(@)(@@) % معودة سحر البيان فبينما % % تروق ذوي الالباب أمست تروعها % % 26(@)(@@) % فرائد لا ترضى ابن عباد عبدها % % ويعلو على وصف البديع بديعها % % 27(@)(@@) % لئن حفظت مصر وشام برأيه % % لقد حفظت بطحاؤها وبقيعها % % 28(@)(@@) % وقد بث فيها العدل حتى بأمنها % % مها الرمل تمسي والهزبر ضجيعها % % 29(@)(@@) % ربيب العلى والعلم تفديك مهجة % % تضلع من خلفي فداك رضيعها % % 30(@)(@@) % أفدت يدي وفرا ونطقي بلاغة % لفضليك يعزى صنعها وصنيعها % % PageV01P1192 31(@)(@@) % وفرجت بالنعماء حالي وفكرتي % % وقد ضاق بالانكاد عني وسيعها % % 32(@)(@@) % وأمن يا رب السيادة والتقى % % برجواك خوف الرحلتين وجوعها % % 33(@)(@@) % ومثلك من أسدى لمثلي أنعما % تسر وآفاق البلاد تذيعها % % 34(@)(@@) % فخذها بتفويف الثنا كل حلة % لها من مقامات المقال رفيعها % % 35(@)(@@) % لأنجمها وصل السعود بذكركم % % اذا أنجم اخنت عليها قطوعها % % 36(@)(@@) % وهنئت بالأعوام يصفو جديدها % % عليك باقبال ويطرى خليعها % % 37(@)(@@) % مدى الدهر في علياء تبهر أعينا % فما لمحات العين إلا ركوعها 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms235# % % PageV01P1193 البحر : - 1(@)(@@) % يخيل لي برق من الثغر لامع % % فيسبقه غيث من الجفن هامع % % 2(@)(@@) % ويرفع طرفي للصبابة قصة % فتجري على عاداتهن المدامع % % 3(@)(@@) % بروحي من قال الرقيب لحسته % % على كل حين من وصالك مانع % % 4(@)(@@) % ومن كل يوم في هواها متيم % % يموت ولوام عليه تنازع % % 5(@)(@@) % تدافعني فيها الوشاة عن الأسى % % ومالشهود الدمع والسقم دافع % % 6(@)(@@) % وذي عذل في الحب لا هو ناظر % إلى حسن من أهوى ولا أنا سامع % % 7(@)(@@) % مضى في الهوى قيس وقد جئت بعده % % فها أنا للمجنون في الحب تابع % % 8(@)(@@) % تذكرني الورقاء بالرمل معهدا % فهل نجم أوقاتي على الرمل طالع % % 9(@)(@@) % وتشدو على عيدانها فتثير لي % % كمائن وجد ضمنتها الأضالع % % 10(@)(@@) % وذكرى شهاب كان لي من ورائه % % إلى مالك لي في الصبابة شافع % % PageV01P1194 11(@)(@@) % وأوقات أنس بين شاد وشادن % كما اقترح اللذات راء وسامع % % 12(@)(@@) % وكأس لغيري أصفر من نضارها % % ولي من لمى المحبوب للهم فاقع % % 13(@)(@@) % تعوضت عنها بارتشاف مديرها % % كما حرمت منها علي المراضع % % 14(@)(@@) % وقضيتها أوقات لهو كأنما % % عفا الدهر عنها فهو يقظان هاجع % % 15(@)(@@) % زمان الهوى والفود أسود حالك % وعصر الصبى والعيش أبيض ناصع % % 16(@)(@@) % إذا ابيض مسود العذار فانما % % هو الصبح للذات بالليل قاطع % % 17(@)(@@) % لعمري لقد عاد النعيم لفاقد % وقد طلعت للشام نعم المطالع % % 18(@)(@@) % وزارة شمسي الثنا يعتلى به % % محل ويدنو نوره والمنافع % % 19(@)(@@) % هنيئا لأفق الشام يا شمس مصره % % بأنك بالتدبير للشام طالع % % 20(@)(@@) % وأنك لا كالشمس ظلك سابغ % ولكن لأهل الزيغ وقدك قامع % % PageV01P1195 21(@)(@@) % وأن نماء الخلق والرزق لم يزل % % إلى الشمس عن إذن من الله راجع % % 22(@)(@@) % وأنك يا موسى لذو القلم الذي % % تهش به أهل الحيا وتدافع % % 23(@)(@@) % عصا لبلاد الشام فيها مآرب % % ومن يدك البيضاء فيها صنائع % % 24(@)(@@) % فراعنة الكتاب عن ظلمنا ارجعوا % % فقد جاء موسى والعصا والقوارع % % 25(@)(@@) % وذو الهيبة اللاتي بها يزع الورى % % و ما ثم إلا خوفك الله وازع % % 26(@)(@@) % اذا المرء خاف الله خافت من اسمه % % أسود الفلا والعاديات الرواتع % % 27(@)(@@) % لنعم الوزير الباسط اليد أنعما % وأدعية للملك جذلان وادع % % 28(@)(@@) % أخو الزهد والتدبير اما تهجد % واما يراع ساجد الرأس راكع % % 29(@)(@@) % ولو لم يجدنا غيث جدواه جادنا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms236# % % بفضل دعاه شائع الغيث ذائع % % 30(@)(@@) % تقصر أفكار العدى عن خداعه % % ويخدعه في الجود من لا يخادع % % PageV01P1196 31(@)(@@) % أنا ابن كثير في رواية جوده % % ومن كل بأس عاصم ثم نافع % % 32(@)(@@) % يقوم مقام النيل في مصر فضله % % اذا جرت الاقلام تلك الاصابع % % 33(@)(@@) % ويغني عن الأنواء في الشام عدله % % وعدل الفتى للخصب نعم المزارع % % 34(@)(@@) % أتانا وقد ضن السحاب بقطره % % فجاد وأجدى نيله المتدافع % % 35(@)(@@) % ولما وجدنا للثراء زيادة % علمنا بأن الشام للخير جامع % % 36(@)(@@) % كذا فليدبر دولة ورعية % وزير لجمع المال والجود بارع % % 37(@)(@@) % ألم ترني من بعد ذل وفاقة % بظل نداه والعناية راتع % % 38(@)(@@) % ألم ترني في طوق نعماه ساجعا % ولا عجب إن المطوق ساجع % % 39(@)(@@) % وسابق ظني لا الوسائل قدمت % % ولا قربتني من حماه الشفائع % % 40(@)(@@) % وعجل معلومي وما كنت واصلا % إلى ربعه والشهر للشهر رابع % % PageV01P1197 41(@)(@@) % وأصلح مني ظاهرا ثم باطنا % فلا أنا عريان ولا أنا جائع % % 42(@)(@@) % إليك ابن تاج الدين در مدائح % % بداية مهديها اليك بدائع % % 43(@)(@@) % واني وان باكرت بالمدح منشدا % % لداع باستار الاجنة ضارع % % 44(@)(@@) % نباتي لفظ قد حلا وتكررت % % اليك به للانام المطمع % % 45(@)(@@) % وقد كان من حيث الاضاعة ضائعا % فها هو من حيث التضرع ضائع % % 46(@)(@@) % تقول رياض المزهرات لزهره % % بلينا وما تبلى النجوم الطوالع % % 47(@)(@@) % لك الله في كل الامور مؤيد % % يمدك بالدهر الذي هو طائع % % 48(@)(@@) % ولا ترفع الأيام ما أنت خافض % % ولا تخفض الايام ما أنت رافع % % PageV01P1198 البحر : - 1(@)(@@) % تذكر جرعاء الحمى فتجرعا % % كؤس الاسى بالدمع راحا مشعشا % % 2(@)(@@) % وفارق جيران الغضا غير أنه % % به أودع القلب الشجي وودعا % % 3(@)(@@) % يكرر لثم الترب حتى كأنه % % يحاول ختما للذي فيه أودعا % % 4(@)(@@) % فأدمعه قد صرن ألفاظ شجوه % % وألفاظه من رقة صرن أدمعا % % 5(@)(@@) % أقول وقد راجعت بالشام ذكرهم % % ألا قاتل الله الحمام المرجعا % % 6(@)(@@) % يذكرني عهد العقيق كأنه % % بلولؤ دمعي صار عقدا مرصعا % % 7(@)(@@) % عسى كل عام زورة لمفارق % % فيا حبذا من أجل لمياء كل عام % % 8(@)(@@) % امام الهدى والعلم هنئت مقصدا % % سعيدا وعودا بالقبول ومرجعا % % 9(@)(@@) % يطوف ويسعى للامام الذي سعى % % وطاف بذياك الحمى وتمتعا % % 10(@)(@@) % تكاد ستور البيت تجذب برده % % لعرفان محمود الشمائل أروعا % % PageV01P1199 11(@)(@@) % لعمري 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms237# لقد سر المقام وأهله % % بزورة أوفى الزائرين وأورعا % % 12(@)(@@) % فان ملأ الاحسان كم مجاور % % فقد ملأ الحجر المحامد والدعا % % 13(@)(@@) % وهنيء أفق الشام رجعة نير % % ملي باسعاد الرعية والرعا % % 14(@)(@@) % تحييه أغصان البلاد كانما % % هوت سجدا نحو الامام وركعا % % 15(@)(@@) % وتلثم حتى مبسم الغيث في الثرى % % بدور لآثار الركائب مطلعا % % 16(@)(@@) % لك الله ما أتقى وأنقى سريرة % % وأرفع قدرا في الأنام وأنفعا % % 17(@)(@@) % وأكرم في الانساب والفضل جمة % % وأشرف في الدنيا وفي الدين موضعا % % 18(@)(@@) % وأندى يدا لو أورقت عود منبر % % لما عجب الرائي وان قيل أينعا % % 19(@)(@@) % كرامات من مدت يدا دعواته % % ظلالا إلى أن عمت الناس أجمعا % % 20(@)(@@) % اليك خطيب الشام لابن خطيبها % % براعة مدح كان برك أبرعا % % PageV01P1200 21(@)(@@) % مديحك فرض لازم لي فطالما % % بدأت فأسديت الجميل تطوعا % % PageV01P1201 البحر : - 1(@)(@@) % كفوا حديث العذل عن مسمعي % % فأين من يعقل أو من يعي % % 2(@)(@@) % ياعاذلي في الحسن ان كنت لم % % تبصر فاني منك لم أسمع % % 3(@)(@@) % لاتزد القلب على شجوه % % ان كنت لا تأرق لي فاهجع % % 4(@)(@@) % انا الذي يروي حديث الاسى % % مسلسلا في الحب عن مدمعي % % 5(@)(@@) % واعجبي في الحب أشكو الجفا % % من ساكن في منحنى أضلعي % % 6(@)(@@) % ان شئت يا بدر الدجى ان بدا % % فاطلع وان شئت فلا تطلع % % 7(@)(@@) % وأنت يا أغصان بان النقا % % اذا تثنى فاسجدي واركعي % % 8(@)(@@) % لا آخذ الله ليالي اللقا % % فإنها أصل الأسى الموجع % % 9(@)(@@) % لو نسيت عيناي إنسانها % % ما نسيت ليلى على الأجرع % % 10(@)(@@) % وغفلة الواشين عن وصلنا % % ونحن كالواجد في مضجع % % PageV01P1202 11(@)(@@) % يا مقلتي بالوصل قري ويا % % مدائحي في ابن حميد ارتعي % % 12(@)(@@) % شمس ينادى ذكره سرويا % % طرف الاعادي خاسئا فارجعي % % 13(@)(@@) % مستحكم الرأي ولكن متى % % تخدعه باغي نشب يخدع % % 14(@)(@@) % يزدحم اللثم على كفه % % تزاحم البهم على المكرع % % 15(@)(@@) % اذا بدا أبصرت حساده % % من مهطع الرأس ومن مقنع % % 16(@)(@@) % آراء عمر و ولهى حاتم % وحلم قيس وذكا الأصمعي % % 17(@)(@@) % جننت يا غيث متى شئت أن % % تحكي أياديه فطر أوقع % % 18(@)(@@) % ذاك الذي عم جدى بره % % وأنت في الموضع والموضع % % 19(@)(@@) % أصبح لا حرز لأمواله % % فلو عدا السارق لم يقطع % % 20(@)(@@) % تهب نعماه وبأساؤه % % من سجسج طورا ومن زعزع % % PageV01P1203 21(@)(@@) % لطافة حفت 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms238# بها هيبة % كالسيف ذي الرونق والمقطع % % 22(@)(@@) % وهمة علياء تعبانة % % أي ربى في المجد لم تقرع % % 23(@)(@@) % لو أنها ألفت هلال السما % % مكان شسع النعل لم تقنع % % 24(@)(@@) % وأنمل تحنو على معدم % تحنن الثدي على المرضع % % 25(@)(@@) % وليس يعيي جودها ذا غنى % جود الحيا في الجدول المترع % % 26(@)(@@) % شم فضله واللفظ وانظر إلى % % صوب الغوادي والحمى الممرع % % 27(@)(@@) % نظم ونثر في عقول الورى % % كالخمر أو كالسحر أوأصنع % % 28(@)(@@) % لا غرو إن تسكر شمسية % % لموعة تصدر عن ألمعي % % 29(@)(@@) % ذو قلم يجني الغنى والفنا % % من شهده أو سمه المنقع % % 30(@)(@@) % ينهل منه القصد في منجح % % ويلجأ الجيش إلى منجع % % PageV01P1204 31(@)(@@) % أي رديني بغى حربه % % من ندم للسن لم يقرع % % 32(@)(@@) % يا سابق الناس لشأو العلى % % من حاصر باق ومن مرتع % % 33(@)(@@) % كأنما يسلك في مجهل % % وأنت في متضح مهيع % % 34(@)(@@) % تهن بالحجة مقبولة % % فائزة المقصد والمرجع % % 35(@)(@@) % والحجر المدني اليه يدا % بأكرم الحالك والأصنع % % 36(@)(@@) % وانعم ودم واسمع معاني الثنا % % على قصور الخلق واستمتع % % 37(@)(@@) % جلت معاليك على واصف % حتى غدا المادح كالمقدع % % 38(@)(@@) % وأبعدت عن حاسد كائد % أين السهى من مقعد أقطع % % 39(@)(@@) % وأبعدت علياك لي في الندى % % فجبتها بالكلم المبدع % % 40(@)(@@) % ورد نعماك الي الرجا % % فأنت شمسي والرجا يوشعي % % PageV01P1205 البحر : - 1(@)(@@) % أذات الحجى إن الحجاب ليمنع % % عن اللفظ حتى في رثائك يسمع % % 2(@)(@@) % ولكن تطويقي لهى ناصرية % % تحث على أني أنوح وأسجع % % 3(@)(@@) % ولم لا وقد أبصرته متحرقا % بفرقة حب راحل ليس يرجع % % 4(@)(@@) % أيسرع لي بالمال جودا ولا أرى % % بماء جفوني جائدا أتسرع % % 5(@)(@@) % وأما دموعي بالبكاء كأنها % % على صحن خدي من دم القلب تهمع % % 6(@)(@@) % لقد عمنا ما خصه من رزية % بأمثالها تدمي الجفون وتدمع % % 7(@)(@@) % رزية من كانت له أصل بهجة % % وكل بهيج ضمنها يتفرع % % 8(@)(@@) % فمالي لا أرثي تقاها وفضلها وأندب للمحراب قنديل غرة بنور التقى طول الدجى يتشعشع % % وأرثي له والقلب حران موجعسقط بيت ص % % 9(@)(@@) % وأندب للمعروف والبر راحة % ترى راحة تعبانها حين ينفع % % 10(@)(@@) % وأندبها للترب من حجب العلى % % وديعة أستار إلى عدن تودع % % PageV01P1206 11(@)(@@) % وأندبها لليوم صوما وللدجى % % صلاة وأذكارا ونسكا يوزع % % 12(@)(@@) % وللبيت بيت الفضل كدر صفوه % % وللبيت من ذات الصفاحين 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms239# يهرع % % 13(@)(@@) % فيالك من بيت جديد بكى لها % % وبيت عتيق نحوها يتطلع % % 14(@)(@@) % ويالك من حزن تجدد عندنا % % به حزن يعقوب الذي كاد يقلع % % 15(@)(@@) % وحزن أخ قد جاورته كرامة % % لها وإلى بيت الكرامات ينزع % % 16(@)(@@) % وحزن كبار أو صغار تتابعوا % % أسودا وغزلانا تسير وتتبع % % 17(@)(@@) % هو الموت كأسا من حميا حمامها % % ومن حسرات قبلها تتجرع % % 18(@)(@@) % وصرف لأرواح البرية ناقد % على أنه في أخذ نقديه مجمع % % 19(@)(@@) % وسبع ليال دائرات على الورى % % بنوع افتراس فيهمو ليس يشبع % % 20(@)(@@) % ألا في سبيبل الله نقد عزيزة % % تولت وأبقت لاعج الحزن يرتع % % PageV01P1207 21(@)(@@) % سلام ورضوان عليه ورحمة % وروح وريحان وخمر منوع % % 22(@)(@@) % على جهة إن قيل ست فانها % % عليها من الست الجهات تفجع % % 23(@)(@@) % يعز عليها نار حزن تمسه % % وتلك بجنات العلى تتمتع % % 24(@)(@@) % ولو بلغت ما مسه من مصابها % % لكادت به في جنة الخلد تجزع % % 25(@)(@@) % وما رحلت حتى رأت فيه كلما % % تمنت فليست من حمام تروع % % 26(@)(@@) % ولو خيرت لم ترض إلا بقاءه % % ونقلتها فليهنها القصد أجمع % % 27(@)(@@) % وكم مرة فداه بالنفس نطقها % % فقد صح ما كانت له تتوقع % % 28(@)(@@) % وشيعها بالبر زادا تسننا % فلله منه سنة وتشيع % % 29(@)(@@) % تهن بنو نعش لمطلع نعشها % % نعم وبنات النعش أيان تطلع % % 30(@)(@@) % وما هي إلا روعة من رزية % ولكن لها ثبت العزائم أروع % % PageV01P1208 31(@)(@@) % بليغ عرفنا صنعة اللفظ عنده % % فما قدر ما في وعظه يتصنع % % 32(@)(@@) % سقى لحدها الروضي غيث كأنه % % نداه علينا وارف وممرع % % 33(@)(@@) % وخفف عن أحشاه وهجا لو أنه % % سحائب ضيف عن قريب تقشع % % 34(@)(@@) % طمعنا بحدس في رجوع مفارق % % وفي غير من قد وارت الأرض يرجع % % 35(@)(@@) % وان منع الماضون من سعيهم لنا % % فانا عن المسعى لهم ليس نمنع % % PageV01P1209 البحر : - 1(@)(@@) % هل لك يا أرفع البرايا % % في قرية شأنها رفيع % % 2(@)(@@) % قد أحوجت عبدك الليالي % % لسفرة أمرها فظيع % % 3(@)(@@) % لم يستطع مكتري حمار % % فكيف للملك يستطع % % 4(@)(@@) % هذا وفي حظه نزول % % نعم وفي رجله طلوع % % 5(@)(@@) % ليس له طاقة ليجري % % إلا إذا فاضت الدموع % % 6(@)(@@) % فاجعل له في الانام شأد % % بفرس سوقها بديع % % 7(@)(@@) % اذا تسمى الجواد بحرا % فبحرها في الفلا سريع % % 8(@)(@@) % ودم مدا الدهر في أمان % % يفديك 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms240# أبناؤه الجميع % % 9(@)(@@) % فحبذا رفدك المعنى % % وحبذا وقتنا المريع % % 10(@)(@@) % شهر وفضل جود كف % % ثلاثة كلها ربيع % % PageV01P1210 البحر : - 1(@)(@@) % تسلسلت في خدي الأدمع % % معربة فاعجب لما يسمع % % 2(@)(@@) % قد رجع الدمع إلى غربة % % وعن غزال الشرق لا أرجع % % 3(@)(@@) % حبي له حب علي العلى % % وفيهما المخلص والمقطع % % 4(@)(@@) % في ذا وذا وصفي ومدحي فما % % للغير في شعري مستمتع % % 5(@)(@@) % يا من يهنى العيد والعلم والز % % مان والناس به أجمع % % 6(@)(@@) % زد كل يوم في العلى رفعة % وليصنع الحساد ما يصنعوا % % 7(@)(@@) % عيشك والقدر كما تشتهي % % تخفض هذاك وذا ترفع % % PageV01P1211 البحر : - 1(@)(@@) % أصبحت لم أخش للزمان أذى % وشافعي الزمان لي شافع % % 2(@)(@@) % حيتك قاضي القضاة من مدح % % نجوم حمد سعيدة الطالع % % 3(@)(@@) % وجاء قبر الامام سيدنا الح % % سين صوب من الرضا هامع % % 4(@)(@@) % ذاك الحسين الذي مضى فأنا % % لا هو ظام إلى اللقا جائع % % 5(@)(@@) % ذاك الذي كنت من عوارفه % % أسند عن عاصم وعن المنى نافع % % 6(@)(@@) % مباشروا الجامع الذين هم % صحبي ولكن على المنى مانع % % 7(@)(@@) % لولا نداك العميم يشملنا % % ماكان بيني وبينهم جامع % % PageV01P1212 البحر : - 1(@)(@@) % جاء البشير بها فقلت لدره % % لفظا وفضلا شنف الأسماعا % % 2(@)(@@) % سمراء إلا أنها حنطية % % تروي عطاشا للقا وجياعا % % 3(@)(@@) % وكريمة الانساب أصدقها الندى % % كفوءا اذ أمر القريض أضاعا % % 4(@)(@@) % يا آل فضل الله دمتم في الثنا % % والأجر كنزا للعفاة مشاعا % % 5(@)(@@) % يسقى نداكم من نباتي الثنا % % زرعا يغاث فيعجب الزراعا % % 6(@)(@@) % وتؤمرون قصائدي من بعد ما % % كابدت من حالي الضعيف ضياعا % % 7(@)(@@) % كم ضيعة للحال كانت قطعة % % فغدت بضيعة غلة أقطاعا % % PageV01P1213 البحر : - 1(@)(@@) % نعم لي وقفة لا للدموع % % على تلك المنازل والربوع % % 2(@)(@@) % لجيران العقيق أفضت دمعي % % مناسبة بمحمر النجيع % % 3(@)(@@) % وفي تاج الزمان نظمت درا % % فيا لله من عقد بديع % % 4(@)(@@) % كريم الوصف والانساب قالت % % أضف لسنا الأصول سنا الفروع % % 5(@)(@@) % كذا قاضي القضاة مدا الليالي % % محلى التاج بالنظم الرفيع % % 6(@)(@@) % لقد طلعت علينا من سناه % % نجوم اليمن بالخصب المريع % % 7(@)(@@) % نداه وفصلنا والشهر فيه % % ربيع في ربيع في ربيع % % PageV01P1214 البحر : - 1(@)(@@) % على اليمن والنعمى قدوم أحبة % تخب بهم عيس الركاب وتوضع % % 2(@)(@@) % لركبهم المصري قلبي هدية % % على أن دمعي بالمسرة ينبع % % 3(@)(@@) % أمولاي نور الدين 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms241# هنئت حجة % زكا لكم فيها مسير ومرجع % % 4(@)(@@) % أتمت مساعيك الزكية نسكها % % وما فاتنا من جود كفك منجع % % 5(@)(@@) % فان فاز مولانا بحج أتمه % % فها نحن في نعمائه نتمتع % % 6(@)(@@) % وإن لم يكن في وقفة جمعية % % فها نحن فيكم بالهنا نتجمع % % 7(@)(@@) % مدائحنا فيكم وفي مثل بيتكم % % فروض وفي بعض الأنام تطوع % % PageV01P1215 البحر : - 1(@)(@@) % برغمي أن شرعت له رثاء % ولم ألزم بتهنئة شروعا % % 2(@)(@@) % وليد كان يا أسفي حبيبا % أبى تسيار كوكبه رجوعا % % 3(@)(@@) % وما قلبي اذا حجر فيسلو % % هلالا قبل ما اكتمل الطلوعا % % 4(@)(@@) % فيا ولدي تولد حزن قلب % فعم أصول بيتك والفروعا % % 5(@)(@@) % ومس عيون من فارقت شر % فأصبح كل إنسان جزوعا % % 6(@)(@@) % أما والجاريات بصحن خد % بكت والموريات ورت ضلوعا % % 7(@)(@@) % لقد أطفا شميعة نور بيت % ردى كم مثلها أطفا شموعا % % PageV01P1216 البحر : - 1(@)(@@) % يا اماما لم يزل في الفض % % ل ذا كف صناعي % % 2(@)(@@) % باهر قولا وفعلا % % في عيان وسماع % % 3(@)(@@) % مااسم ذي حجم لطيف % % بين أيدي القوم ساعي % % 4(@)(@@) % ناحل أصفر من % % غير سقام وارتياع % % 5(@)(@@) % وهو مصري ومطب % % وع لذيذ الاجتماع % % 6(@)(@@) % وهو في الخط خماس % % ي وفي اللفظ رباعي % % PageV01P1217 البحر : - 1(@)(@@) % يقولون تبكي والديار قريبة % % اذا بعدت أوطانهم كيف تصنع % % 2(@)(@@) % دعوا مقلتي العبري تجود بمائها % % عسى أن حزن من الجفن يوضع % % 3(@)(@@) % وثقت بتنكيد الفراق فأسبلت % % جفوني وعجلت الذي أتوقع % % 4(@)(@@) % وما هي الا مهجة ذاب شطرها % % فسالت بها من فوق خدي أدمع % % 5(@)(@@) % وعما قليل ينفذ البين سهمه % % فلا مهجة تبقى ولا دمع يهمع % % PageV01P1218 البحر : - 1(@)(@@) % عملت للمولى الذي ذاته % % على فنون الفضل مجموعه % % 2(@)(@@) % روضة نرد كم هزار بها % % نغمته في الطاس مسموعه % % 3(@)(@@) % ان كان للشطرنج منصوبة % % فرتبتي في الحسن مرفوعه % % PageV01P1219 البحر : - 1(@)(@@) % للبغلة الشهباءعذر بين % % اذ قيل قد وقعت ووصف جامع % % 2(@)(@@) % هي كوكب حملت مطالع نير % % بين التقى والفضل نعم الطالع % % 3(@)(@@) % فمن المسرة فهي نسر طائر % % ومن المهابة فهي نسر واقع % % PageV01P1220 البحر : - 1(@)(@@) % يا منزل ابن علي حيتك الصبا % % وسقى مرابعك الغمام الهامع % % 2(@)(@@) % صفت بك الاغصان صف جماعة % % والغصن إما قائم أو راكع % % 3(@)(@@) % ورقى لديك الطيرمنبر ايكة % % فعلمت أنك للمسرة جامع % % PageV01P1221 البحر : - 1(@)(@@) % سل عن مقامي والرؤوس 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms242# حوائم % تحت العجاجة والنسور وقوع % % 2(@)(@@) % والمرهفات على الجسوم شوابك % % حتى كأن المرهفات دروع % % 3(@)(@@) % هل أكشف الغمى ووجهي مسفر % فأروق عادية الوغى وأروع % % PageV01P1222 البحر : - 1(@)(@@) % تفترس الناس في هواها % % مالكة للقلوب تدعو % % 2(@)(@@) % مليحة حجبت وشاعت % % فخاب طرس وفاز شمع % % 3(@)(@@) % عجيبة الإسم قيل خمس % و قيل ست وقيل سبع % % PageV01P1223 البحر : - 1(@)(@@) % و صديق أنشدته لي بي % % تين حوت في الصداع معنى بديعا % % 2(@)(@@) % فادعاها لأجنبي ولو كا % % ن ادعاها لخاف أمرا شنيعا % % 3(@)(@@) % فقلت ليسا له ولا لي تعزى % % و استرحنا من الصداع جميعا % PageV01P1224 البحر : - 1(@)(@@) % تحمل حيث كنت صداع قصدي % % فقصد سوك مالا يستطاع % % 2(@)(@@) % إذا ما كنت للرؤساء رأسا % فلا تنكر اذا حصل الصداع % % PageV01P1225 البحر : - 1(@)(@@) % دع من شفيع صحبة ما أذنبت % % و اهنأ بمحبوب الجمال بديع % % 2(@)(@@) % و اذا الحبيب أتى بذنب واحد % جاءت محاسنه بألف شفيع % % PageV01P1226 البحر : - 1(@)(@@) % عملت لمن جود أقلامه % % ربيع ومنطقه بارع % % 2(@)(@@) % إذا طلع الخط رملته % % فيا حبذا الرمل والطالع % % PageV01P1227 البحر : - 1(@)(@@) % لئن ضاع مثلي عند مثلك انني % % لعمر المعالي عند أضيع % % 2(@)(@@) % متى تنجع الشكوى اذا أنا لم أجد % % لديك اعتنآء غير أنك تسمع % % 3(@)(@@) % و ما كان صعبا لو مننت بلفظة % % ترد بها عني الخطوب وتردع % % 4(@)(@@) % و قلت امرؤ للشكر والأجر قابل % و للبر فيه والصنيعة موضع % % 5(@)(@@) % و مغترب عن قومه ودياره % % أساعده والله يعطي ويمنع % % 6(@)(@@) % سأصبر حتى تنتهي مدة الجفا % % و ما الصبر الا بعض ما أتجرع % % 7(@)(@@) % عسى ظلمة الحي التي قد تعرضت % % سحابة صيف عن قريب تقشع % % 8(@)(@@) % على أنني راض بما أنا صانع % % وصول الولا لو أنني أتقطع % % 9(@)(@@) % حبست لضيق الرزق حبس حمامة % % فها أنا فيكم بالمدائح أسجع % % 10(@)(@@) % و أصبح فكري كالعبير سواده % % إذا نفحته جذوة يتضوع % % PageV01P1228 11(@)(@@) % شاب فود الصب حزنا مثل ما % % هم بالهجر حبيب ودعه % % 12(@)(@@) % يالشيب عم وجها فبكى % % كيف لا يبكي لشيب قنعه % % 13(@)(@@) % يا لقلب مودع سر الأسى % % ودع الصب وماذا أودعه % % 14(@)(@@) % يا عليا لست أنسى بره % % و هو لا ينسى مديحا يسمعه % % 15(@)(@@) % سيدي كن غوث ألفاظي فقد % % أصبحوا من شامهم في مضيعه % % 16(@)(@@) % حسرتي مع اذ ومع ذا فأنا % % معهم 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms243# مع بعدهم في معمه % % 17(@)(@@) % غير أني قائل قول فتى % % كضه صد فأبدى جزعه % % 18(@)(@@) % لا تهني بعد ما أكرمتني % % فشديد عادة منتزعه % % 19(@)(@@) % و ابق ذا الفضلين فضلا حازه % % وارث العليا وفضلا جمعه % % 20(@)(@@) % واهن بالعيد وألف مثله % % في سناء أو هناء أودعه % % PageV01P1229 21(@)(@@) % قل لوزير الملك يا من له % % عزائم مثل الظبا تقطع % % 22(@)(@@) % يا زارعا مني النبات الذي % % يعجب بالأمداح مع يزرع % % 23(@)(@@) % هنئتها ياسيدي خلعة % قلوب أعداك بها تخلع % % 24(@)(@@) % بيضاء كم ظرف عدى بيضت % % حتى تمنى أنه يقلع % % 25(@)(@@) % من فوق خضراء سقى روضها % % غيث أياديك التي تهمع % % 26(@)(@@) % قالت وقد راق لها منظر % كالبدر من أزرارها يطلع % % 27(@)(@@) % زد كل يوم في العلى رفعة % و ليصنع الحاسد ما يصنع % % 28(@)(@@) % عش لعفاة طوقوا بالندى % % فالكل في دوح الثا يسجع % % 29(@)(@@) % الدهر نحوي كما ينبغي % % يدري الذي يخفض أو يرفع % % 30(@)(@@) % حلفت لها بالعاديات دموعي % % و بالموريات النار وهي ضلوعي % % PageV01P1230 31(@)(@@) % لئن كان من قد لامني غير مبصر % % محاسنها إني لغير سميع % % 32(@)(@@) % محجبة تفتر عن مبسم كما % % ينظم في أزكى الأنام بديعي % % 33(@)(@@) % فريد العلى والعلم والحلم والتقى % % فيا لفريد حائز لجميع % % 34(@)(@@) % يضوع قريضي في الورى بامتداحه % % و ما جوده لي في الورى بمضيع % % 35(@)(@@) % أصوغ بسيطا في الثنا وكاملا % على وافر من جوده وسريع % % 36(@)(@@) % و لا عيب في احسانه غير أنني % % شرهت فمالي وصف قنوع % % 37(@)(@@) % بشهر ربيع قد أتيت مهنئا % و كل زماني منه شهر ربيع % % 38(@)(@@) % فلا زال من خدام مدحي لفضله % % صوابي ونجحي مقبلا وشفيعي % % 39(@)(@@) % كتم الحب جهده فأزاعه % % مدمع زاد قسمه فأشاعه % % 40(@)(@@) % ليس لي من ذوي الملاحة الا الد % % مع قامت به علي الشناعة % % PageV01P1231 41(@)(@@) % أمرتني الاشجان أمر الندى لاب % % ن علي فقلت سمعا وطاعه % % 42(@)(@@) % دام قاضي القضاة بحر علوم % % وندى عم سنة وجماعة % % 43(@)(@@) % من هبات الوهاب في الخلق تبقى % % طول دهر وفي العدى سم ساعه % % 44(@)(@@) % ليس فيه عيب سوى فرط جود % % قد نهانا عن مستحب القناعة % % 45(@)(@@) % علمتنا نعماه وصف علاه % % فلها الفضل بالغنى والبراعة % % 46(@)(@@) % لله طرف غداة البين قد همعا % % وحملته الليالي فوق ما وسعا % % 47(@)(@@) % بين السهاد وبين الدمع 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms244# مقتسم % % فيكم فما جف من شوق ولاهجعا % % 48(@)(@@) % يخادع الشوق طرفي عن مدامعه % % أن الكريم اذا خادعته انخدعها % % 49(@)(@@) % ويقتضي الهم تسهادي فيا حربا % من قاتلين على انساني اجتمعا % % 50(@)(@@) % سحقا ليوم النوى ماذا رمى بصري % % حتى استهل وماذا بالحشا صنعا % % PageV01P1232 51(@)(@@) % وقائل ماالذي أبكاك قلت له % % شخص رمى بالنوى طرفي فقد دمعا % % 52(@)(@@) % قل للامام محمد % % ذي الفضل والكرم المذاع % % 53(@)(@@) % يا صاحب القصد الجمي % % ل يحف بالأمر المطاع % % 54(@)(@@) % حاشاك أن تنسى له ال % % كتاب ذا حال مضاع % % 55(@)(@@) % في الطرس من فرجيتي ال % % بيضاء أكتب بالرقاع % % 56(@)(@@) % ألا رب ذي ظلم كمنت لحربه % % فأوقعه المقدار أي وقوع % % 57(@)(@@) % وماكان لي إلا سلاح تهجد % % وأدعية لا تتقى بدروع % % 58(@)(@@) % وهيهات أن ينجو الظلوم وخلفه % % سهام دعاء من قسي ركوع % % 59(@)(@@) % مريشة بالهدب من جفن ساهر % % منصلة أطرافها بدموع % % 60(@)(@@) % يفوت عياني مشهد من جمالكم % % فيجمع طرفي والمدامع جامع % % PageV01P1233 61(@)(@@) % هوى مطمع إنسان عيني وإنما % % تقطع أعناق الرجال المطامع % % 62(@)(@@) % بروحي من نظمت في خصرها الثنا % % فرحت وفي لاشيء نظمي ضائع % % 63(@)(@@) % وأودعتها قلبي وصبري والكرى % % وحكم الهوى أن لا ترد الودائع % % 64(@)(@@) % أيا تاج دين الله شكرا لأنعم % أجبت بها راجيبك من قبل ما دعا % % 65(@)(@@) % وأبقيتها تستنطق الخلق بالثنا % % وتشهد بالأجر الملائك أجمعا % % 66(@)(@@) % وإن قصرت عن بارع الحمد قدرتي % % فو الله ما قصرت عن نافع الدعا % % 67(@)(@@) % لقد قنعت رجواي من قبل ما رأت % % شهاب العلى والعلم في الشام يطلع % % 68(@)(@@) % فلما رأتك الآن اسفر وجهها % % وأقسم لا والله لا تتقنع % % 69(@)(@@) % فما الغيث إلا من بنانك قطرة % % وما الغيث من يمينك أصبع % % 70(@)(@@) % قل لوزير الملك يا من به % % تروي بلاد الشام عن نافع % % PageV01P1234 71(@)(@@) % حاشاك أن تروي البنات الذي % % كم ارتوى من غيثك الهامع % % 72(@)(@@) % وحق إنعامك يا مالكي % % مالي سوى عطفك من شافع % % 73(@)(@@) % هنئت بالأعوام تلبس بردها % % متجددا ويماط عنك خليع % % 74(@)(@@) % في نعمة جزمت بأنك خافض % قدر الحسود وقدرك المرفوع % % 75(@)(@@) % قد أعجبت فيها الشهور وأعشبت % % للقاصدين فكلهن ربيع % % 76(@)(@@) % ناعورة نشأت على عهد الأسى % % مثلي فما تنفك ذات توجع % % 77(@)(@@) % كانت قضيبا قبل ذلك يانعا % في أيكة نبتت بإثرة موضع 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms245# % % 78(@)(@@) % ناح الحمام بها وأبكاني الأسى % % فتعلمت نوح الحمام وأدمعي % % 79(@)(@@) % وناعورة كانت قضيبا فأصبحت % % إلى القضيب شوقا كالحمامة تسجع % % 80(@)(@@) % شكوت لها ضر الغرام وحالها % % كحالي بكاء أو حنينا يرجع % % PageV01P1235 81(@)(@@) % ولا بد من شكوى إلى ذي مروءة % % يواسيك أو يسليك أو يتوجع % % 82(@)(@@) % أمين العلى والعلم هنئت حجة % وعودا لديه الأجر والذكر أجمع % % 83(@)(@@) % وقصدا سعيدا لم تضع فيه ثروة % % و ما ضاع إلا نشرها المتضوع % % 84(@)(@@) % تمتع مولانا بعمرة حجة % وها نحن في نعمائه نتمتع % % 85(@)(@@) % في كل يوم خلعة بدرية % % طلعت بها الآمال أشرف مطلع % % 86(@)(@@) % قالت للابسها سعادة نطقه % % قل يا محمد في الممالك أودع % % 87(@)(@@) % الفضل إرثك والمهابة والنهى % % فافخر وأوقع بالعداة ووقع % % 88(@)(@@) % يا تاج دين الله كم نعمة % لنعمة بين الورى تتبع % % 89(@)(@@) % عش لعفاة طوقوا بالندى % % فالكل في دوح الثنا يسجع % % 90(@)(@@) % عيشك والقدر كما ترتضي % % يخفض هذاك وذا يرفع % % PageV01P1236 91(@)(@@) % هنئت بالعيد السعيد وحبذا % % لبقاء شملك بالهنا مجموع % % 92(@)(@@) % في رفعة وسعادة ما برها % % في الخلق مقطوع ولا ممنوع % % 93(@)(@@) % ولحالنا المكسور يدعو برك ال % % منصوب يا من قدره المرفوع % % 94(@)(@@) % قاضي قضاة الدين دم في علي % لا تلحن الأيام في رفعها % % 95(@)(@@) % وانظر بنعماك إلى حال ذي % % ضرورة يعجز عن دفعها % % 96(@)(@@) % قد أدبر الصوم ولي مقلة % % ما نظرت قط سوى دمعها % % 97(@)(@@) % عش مهنا بألف عام وعيد % بين جزم من الأمور ورفع % % 98(@)(@@) % يا اماما ان هان قدري فلي من % % خمس بمناك عائدات بنفع % % 99(@)(@@) % حبذا عشرنا ويا حبذا الخم % % س ولو أنها بنفع وصفع % % 100(@)(@@) % تتوارد المداح في أوصافكم % % يا آل فضل الله نظما مبدعا % PageV01P1237 101(@)(@@) % مسكية الأقلام في أطراسها % % بين القصائد سجدا أو ركعا % % 102(@)(@@) % ان قصرت في مدحة مع بذلها % % جهدا فلا والله ما قصر الدعا % % 103(@)(@@) % أيا ملكا فاق الكرام وفاتهم % % أما آن تحظى لديك ذرائعي % % 104(@)(@@) % أيحسن بعدي عن بلادك بعد ما % % عرفت بقول في صفاتك بارع % % 105(@)(@@) % وما أسفي أن الثواء يفوتني % % ولكن لقدر عند غيرك ضائع % % 106(@)(@@) % أيا ملك الشجاعة والمعالي % % ونشر العلم والحسب الرفيع % % 107(@)(@@) % قدومك هذه الأيام فيه % % جناس مذكر كتب البديع % % 108(@)(@@) % كريم ثم فضل ثم شهر % ربيع في 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms246# ربيع في ربيع % % 109(@)(@@) % يا من تبينت السيادة أنه % % في الناس ملء عيونها وسماعها % % 110(@)(@@) % ما بالوسائل فضل رأيك يقتضي % % ان الشموس منيرة بطباعها % % PageV01P1238 111(@)(@@) % قدمت أميرا في بني الدهر آمرا % على الدهر يصغي سامعا ويطيع % % 112(@)(@@) % ولا عجب للشهر وافق مقدما % فكل زمان في حماك ربيع % % 113(@)(@@) % وعيشك لولا سقم جسمي والبكى % % لما كان سري في هواك بذائع % % 114(@)(@@) % لئن لم يسر في بحر شعري فقد سرى % % بأشعار سقمي في بحور مدامعي % % 115(@)(@@) % يا ناصب القد عالي الحسن مرتفع % % فالحب ما بين منصوب ومرفوع % % 116(@)(@@) % جوارحي وكتابي قد نهبتهما % % ففي يديك على الحالين مجموعي % % 117(@)(@@) % سلت مهجة قد كان صدعها الاسى % % فلا آخذ الله الاسى بصدوعها % % 118(@)(@@) % وعينا على حالي بعاد وجفوة % % عفا الله عما جرى من دموعها % % 119(@)(@@) % وقائلة لي بعد ما شاب مفرقي % % وفكري في تيه الشبيبة يرتع % % 120(@)(@@) % أترجع عن لهو الصبا بملامة % % فقلت ولا والله بالشيب أرجع % % PageV01P1239 121(@)(@@) % وناعورة قسمت حسنها % % على ناظر وعلى سامع % % 122(@)(@@) % وقد ضاع نشر الربى فاغتدت % % تدور وتبكي على الضائع % % 123(@)(@@) % أحسن بها ناعورة في روضة % % عن جعفر يروي الهناء ربيعها % % 124(@)(@@) % هذا وليس يعد موج دموعها % % وتعد من فرط السقام ضلوعها % % 125(@)(@@) % نعتوك حقا بالامام لما حوت % % علياك من نسك وعلم بارع % % 126(@)(@@) % وأعنت أرباب المقاصد شافعا % لهم فأهلا بالامام الشافع ي % % 127(@)(@@) % وزير التقى هل أنت في العشر عاطف % % على فاقتي بين الورى وخضوعي % % 128(@)(@@) % وماالعشر الا العسر في كل حالة % % ولكنني نقطته بدموعي % % 129(@)(@@) % ياسائلي عن حظ خطي وقد % % أهملت في كتاب هذي البقاع % % 130(@)(@@) % معلومي الثلث ويا ليته % % ورسمي النسخ وثوبي الرقاع % % PageV01P1240 131(@)(@@) % قد أفقرتني غيداء واصلة % % فدمع عيني غير مقطوع % % 132(@)(@@) % وكنت أبكي من الغرام بها % % فصرت أبكي منها من الجوع % % 133(@)(@@) % يا إمام التقى مضى ربع عام % من وصولي ولم يصل لي ربع % % 134(@)(@@) % سنة إن غفلت عني فيها % % كسرتني وكيف لا وهي سبع % % 135(@)(@@) % يا مديد النوال دعوة راج % حثه جودك البسيط السريع % % 136(@)(@@) % لا نبالي ان قيل شهر جمادى % % كل شهر براحتيك ربيع % % 137(@)(@@) % صحاب قصدنا عن لقاهم منافعا % فلم نر شيئا من وجوه المنافع % % 138(@)(@@) % رجا شافع نسج المودة بيننا % % ولا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms247# خير في ود يكون بشافع % % 139(@)(@@) % اصبروا للرقاع أكتب فيها % % كل يوم حوائجي وصداعي % % 140(@)(@@) % واحسبوا أنها كما حكم الده % % ر عراة تسمى بذات الرقاع % % PageV01P1241 141(@)(@@) % سيدي ان الذي أوصل لي % % فقده من ظنه أن يمنعا % % 142(@)(@@) % سلم المعلوم شهرا واحدا % ثم ما سلم حتى ودعا % % 143(@)(@@) % يا جاعل الجامع المعمور منتظرا % محاسنا منه في الأوصاف مبتدعه % % 144(@)(@@) % تركت للشوق حرا في جوانحنا % % فلا خلا منك لا صف ولا جمعه % % 145(@)(@@) % صف مكرمات وزير مصر عزيزها % % فالفخر ثم الفخر حيث يشاع % % 146(@)(@@) % فاذا حسبت فعنده القلم الذي % % شهد الحساب بأنه نفاع % % 147(@)(@@) % أكرم بأوقات لنا شمسية % % ما ضر وفق زمانها تربيع % % 148(@)(@@) % عدلت وعدلت الزمان فكلها % % في المكرمات وفي الشهور ربيع % % 149(@)(@@) % بروحي مهاة تفضل الشمس مطلعا % وتسكن أحشاء الأديب المروع % % 150(@)(@@) % وقد صرعت قلبي وشقته فاعجبوا % % لبيت لها في الحالتين مصرع % % PageV01P1242 151(@)(@@) % ما انقطع المملوك عن ترداده % % وأنت تدري أن ذاك ممتنع % % 152(@)(@@) % فالحمد لله على علمك يا % % مولاي إني بشر لا ينقطع % % 153(@)(@@) % ترى هل يبلغ المخدوم أني % % لدى الكتاب في حال مضاع % % 154(@)(@@) % أرجي درهم المعلوم ثلثا % واكتب في ثيابي بالرقاع % % 155(@)(@@) % اشكو لفضلك حرفة % % مالي بها مستمتع % % 156(@)(@@) % أحوال معلومي تسو % % ء وصاحب لا ينفع % % 157(@)(@@) % جواب أتاني في ساعة % % يدل على نفث أصل اليراعة % % 158(@)(@@) % ومن عجب الدهر أني به % % تلذذت مع أنه سم ساعه % % 159(@)(@@) % بكيت على لقيا أناس وددتهم % % وان كان لاضري يعد ولا نفعي % % 160(@)(@@) % وان قيل دون القلتين مكانه % % فما في دون القلتين ولا دمعي % % PageV01P1243 161(@)(@@) % ياشيخ علم وشيخ علم % % فمن عيان ومن سماع % % 162(@)(@@) % رفعت قدري عطا ولفظا % يا سيدي أحمد الرفاعي % % 163(@)(@@) % نوالك السعدي يا سيدي % % أرجو على عاداته مربعه % % 164(@)(@@) % لي أشهر أربعة أخرت % % فحظي المشؤوم بالأربعة % % 165(@)(@@) % أفدي صديقا كنت وهو بغيظه % % متطارحين من الكلام بديعه % % 166(@)(@@) % مازالت الحساد تسعى بيننا % % حتى تناكرنا الكلام جميعه % % 167(@)(@@) % أفدي سطورا من كتابك أقبلت % % بعد الجفاء وآذنت برجوع % % 168(@)(@@) % قبلتها فاحمر نقش حروفها % % فكأنني رملتها بدموعي % % 169(@)(@@) % ولما رنت لي ألحاظه % % رفعت بتكبيري الصوت رفعا % % 170(@)(@@) % فيالك في الحسن من أغيد % % تبدى غزالا فكبرت سبعا % % PageV01P1244 171(@)(@@) % بعثت به واثقا أن لي % % شفاعة ذي 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms248# أمل نافع % % 172(@)(@@) % ولا شيء أحسن من مالك % % تجود يداه على شافع % % 173(@)(@@) % جبين سلطاننا المرجى % % مبارك المطلع البديع % % 174(@)(@@) % يا بهجة الدهر ان تبدى % % هلال شعبان في ربيع % % 175(@)(@@) % تأخرت عنكم يا بني ويا أبي % % وما أنا إلا البعض ماض جميعه % % 176(@)(@@) % وعود نباتي متى يرتجي بقا % % وقد مات منه أصله وفروعه % % 177(@)(@@) % ألا يارب خل أرتجيه % % كما يرجى من الوثن انتفاع % % 178(@)(@@) % رميت بوده وصدفت عنه % % فلا ود لدي ولا سواع % % 179(@)(@@) % لهفي لشعر بارع نظمته % % تحتاج بهجته لرفد بارع % % 180(@)(@@) % در يتيم قد تضوع نشره % % يا من يرق على اليتيم الضائع % % PageV01P1245 181(@)(@@) % أبثك يا أخا العلياء أني % % سئمت من الليالي كم تروع % % 182(@)(@@) % أما ينفك قدري في نزول % % ببلدتكم وفي جسمي طلوع % % PageV01P1246 البحر : - 1(@)(@@) % ألا في سبيل الحب حال مسهد % لثعلب هذا الفجر عنه مراغ % % 2(@)(@@) % يراعي نجوم اليل تبرا ودأبه % % أماني من عهد الوصال تصاغ % % 3(@)(@@) % دعا شجوه فقد الأحبه والصبا % % فما للكرى في مقلتيه مساغ % % 4(@)(@@) % أحباي لي في اليوم شغل بصبونتي % % وشيبي وفي أهل الملام فراغ % % 5(@)(@@) % وكم عاقب اللوام والشيب في الهوى % % محبا وفي جلد المحب دباغ % % 6(@)(@@) % صبغت مشيبي راجيا عودة الصبا % % وهيهات منه دعوة وبلاغ % % 7(@)(@@) % كذلك أفكار المشيب اذا سرت % % وفي بعض باذنجانهن صباغ % % 8(@)(@@) % دع الغي بعد الأربعين فكم دعا % % هداة الورى داعي الغواة فزاغوا % % 9(@)(@@) % وقد أسقط العالي بناثر ساقط % % كطاهر ماء المزن حين بلاغ % % 10(@)(@@) % تبارك من صان العلى بعليها % % على حين رام السائدون وراغوا % % PageV01P1247 11(@)(@@) % ثنى كل باع عن مداها ممدح % % كأن ثناه في البسيطة باغ % % 12(@)(@@) % ووافى وأوقات الزمان كثيفة % % فها هي كالبيض الحسان رفاغ % % 13(@)(@@) % أخو الفضل والالفاظ قالت وعلمت % % فأصغى اليها المادحون وصاغوا % % 14(@)(@@) % وقاضي قضاة الشام والذكر والندى % % بحيث ثبير فالحسا فأباغ % % 15(@)(@@) % على كل واد للندى منه مبسم % وفي كل حي للصنائع داغ % % 16(@)(@@) % من المعشر السامين كاد وليدهم % % يقول لنظام المدائح ناغوا % % 17(@)(@@) % كأن العلى شخص لهم منه قد سعا % وفي الناس كعب للعلى ودماغ % % 18(@)(@@) % أمولاي خذ ها ذات نظم موشع % % على أوجه الأنداد ذاك رداغ % % 19(@)(@@) % وما القول إلا كالورى متفاوت % فمنه صهيل أو فمنه تواغ % % PageV01P1248 البحر : - 1(@)(@@) % رشأ 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms249# رشفت رضا به أو ثعلب % % ما للمحب إلى رضاه بلوغ % % 2(@)(@@) % حلو اللمى متمنع يعطيك من % % طرف اللسان حلاوة ويروغ % % 3(@)(@@) % لا مثل أقلام بيمنى سعدها % % لفظا وفضلا كلهن بليغ % % 4(@)(@@) % لسطورها صبغ يرد شبيبة % % منا وللنعمى لديه سبوغ % % 5(@)(@@) % نبغت فضائله وجدوى كفه % % ناهيك نابغة له ونبوغ % % 6(@)(@@) % فليهنه العيد السعيد لمثله % % مدح تساغ لوارد وتسوغ % % 7(@)(@@) % من جوده ذهب ومن ألفاظه % % درر تباح لنا ونحن نصوغ % % PageV01P1249 البحر : - 1(@)(@@) % هنئت يا أعلى الورى رتبة % % مدائحا حكمتها بالغه % % 2(@)(@@) % شقيقها في الحب ياسيدي % % ما كان في النعمان للنابغة % % 3(@)(@@) % كم نعمة أسبغتها للورى % % فهي على عرض الورى سابغة % % PageV01P1250 البحر : - 1(@)(@@) % ولا ئط ألثغ قلنا له % % أفلست قال استمعوا الفدغا % % 2(@)(@@) % أنا امرؤ درهم تحصيله % % يخرج من بغا إلى بغا % % PageV01P1251 البحر : - 1(@)(@@) % مائت إنسان عيني عسجدا % من خدود قد ملاها الحسن صبغا % % 2(@)(@@) % قلت والردف أريني فانثنت % % ثم قالت هكذا الانسان يطغى % % PageV01P1252 البحر : - 1(@)(@@) % شكرا لها من أنعم سعدية % غنى بها المثنى غناء سائغا % % 2(@)(@@) % منديل بعض الناس كأس مكارم % % يعطيك ملآنا ويأخذ فارغا % % PageV01P1253 البحر : - 1(@)(@@) % قاسي الجوانح لين الاعطاف % % أهواه في الحالين غصن خلاف % % 2(@)(@@) % رشأ من الأتراك إلا أن في % % جفنيه ما في الهند من أسياف % % 3(@)(@@) % أدنى حياصته إلى أردافه % % فانظر لزخرفها على الاحقاف % % 4(@)(@@) % واعجب لشكوى الخصررقة حاله % % ومن الغنى لشكاية الأرداف % % 5(@)(@@) % ولتاركي في حبه وكأنما % % إنسان عيني مبتلى برعاف % % 6(@)(@@) % أفديه عسال القوام اذا مشى % % واذا يشاء فمعسل الترشاف % % 7(@)(@@) % تلتف قامته بوارد شعره % % فأرى الشقا في جنة ألفاف % % 8(@)(@@) % ولقد أرى طرق الرشاد بتركه % % لكن قلبي مولع بخلافي % % 9(@)(@@) % واشقوتي منه بخصر مخطف % % نهب السلو وناظر خطاف % % 10(@)(@@) % إن خاب سائل أدمعي في حبه % % فلكثرة الإلحاح والإلحاف % % PageV01P1254 11(@)(@@) % وأكاد أصدق ثم يطمعني به % % بشر يغير الدر في الأصداف % % 12(@)(@@) % لا اليأس يثبت لي عليه ولا الرجا % % فكأنني في موقف الأعراف % % 13(@)(@@) % ولرب ذي عذل اذا بل البكى % % ردني باكر مسمعي بنشاف % % 14(@)(@@) % مالي وللعذل في متحكم % لي في الهوى مضن لديه وشاف % % 15(@)(@@) % إني لأطلب لا لشيء وصله % % إلا لينظر في الوصال عفافي % % 16(@)(@@) % ما كان في العشرين يهفو منطقي % % أيكون في الخمسين فعل هاف 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms250# % % 17(@)(@@) % شيم عن السلف الذكي ورثتها % % لا في الصبي عييت علي ولا في % % 18(@)(@@) % لي حين أنسب أسرة عربية % كادت تعد الشهب من أحلافي % % 19(@)(@@) % وفضائل ما قد سمعت وأنها % % لمسامع الأشراف كالأشناف % % 20(@)(@@) % ولرب ورد عفته لتدلك % ولو أنه نهر المجرة طاف % % PageV01P1255 21(@)(@@) % ما أجور الأيام في إهمالها % % حقي وأعدلها عن الانصاف % % 22(@)(@@) % أشكو التأخر في الزمان وهذه % % شيمي لديه وهذه أسلافي % % 23(@)(@@) % عطفا أحال الدين والدنيا على % % حالي فعندك يحسن استعطافي % % 24(@)(@@) % إن لم أبت ضيفا لبابك قادما % فاجعل كتابي واحد الأضياف % % 25(@)(@@) % وأجزت باب قرى عوائد نحوه % % أن لا يجوز لديه حذف مضاف % % 26(@)(@@) % من أين للآمال مثلك كافل % أم أين للأحوال غيرك كاف % % 27(@)(@@) % أنت الغياث اذا الغمائم أخلفت % % وعد الثرى بالدر في الاخلاف % % 28(@)(@@) % والمسماحة في الندى آلافه % % والواحد المربي على الآلاف % % 29(@)(@@) % غيث الشآم ونيل مصر اذا شئت % % يوما وضاقت رحلة الإيلاف % % 30(@)(@@) % مدت إلى قاضي القضاة يد الرجا % % فأمدها بعوائد الإتحاف % % PageV01P1256 31(@)(@@) % هو كعبة الفضل التي قد أغربت % % أهل المقاصد حولها بطواف % % 32(@)(@@) % أقلامه مثل السهام سديدة % لكنها للوفد كالأهداف % % 33(@)(@@) % حفيت بوفد الآملين فكلها % % يسعى إلى لفيا المؤمل حاف % % 34(@)(@@) % في كف فياض النوال كأنها % % لمع البروق بعارض وكاف % % 35(@)(@@) % لا عيب فيه سوى عطاء مخجل % جهد المدائح زائد الإسراف % % 36(@)(@@) % وثنا يشف ضياؤه فكأنما % % في أعين الاعداء منه أشافي % % 37(@)(@@) % أوصاف مجد أينعت فترنمت % % بالسجع فيها ألسن الوصاف % % 38(@)(@@) % ومناقب قد يممت أمد العلا % % فقفت سوابقها الحسان قواف % % 39(@)(@@) % وفخار بيت في السيادة وازن % ما بيت نظم فخاره بزحاف % % 40(@)(@@) % بيت أبو دلف بناه وبالغت % % انباه في شرف وفي إشراف % % PageV01P1257 41(@)(@@) % ما فاخرته العرب الا هاشما % فغدت لديه هشيمة الاناف % % 42(@)(@@) % أو سامت الفرس الاوائل عزه % % لتقطعت اكتاف ذي الاكتاف % % 43(@)(@@) % تبقى على مر الزمان وغيره % % عاف الذرى متوعر الاكناف % % 44(@)(@@) % يا من مقام فخاره المحمود لم % % تحتج دلائله إلى كشاف % % 45(@)(@@) % وضحت بهمتك العلوم فكلها % % إجماع متفق بغير خلاف % % 46(@)(@@) % ووراك صلى السابقون وسلمت % % آداؤهم من مثبت أو ناف % % 47(@)(@@) % وبك ازدهى الشرع المنيف مقامه % % وأقر رائد روضه المستاف % % 48(@)(@@) % يحميه رمح من يراعك نافذ % ويقيك درع من سجلك ضاف % % 49(@)(@@) % واذا استشار 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms251# الملك رأيك في دجى % % أمر ثنيت الصبح في الإسراف % % 50(@)(@@) % عجبا لمثلك كيف يهمل حالتي % % من بعد ذاك العطف والاسعاف % % PageV01P1258 51(@)(@@) % ولي المصيف وفي حشاي حرارة % للهم فوق حرارة المصطاف % % 52(@)(@@) % وكفى عداتي أنني مافي أن % % ورد الشتا إلا لساني داف % % 53(@)(@@) % ومن الحوادث أن عزمي والصبى % % أودى فليت الحادثات كفاني % % 54(@)(@@) % ولبعد بابك وقد نار في الحشا % % ترمي بكل شرارة كطراف % % 55(@)(@@) % بالرغم أن يجفو ترابك مبسمي % % لكنه غدر الزمان الجافي % % 56(@)(@@) % ولئن قعدت فان ركب مدائحي % % متواصل الاعناق والايجاف % % 57(@)(@@) % خذها اليك كلامة مسرودة % يوم الفخار وحلة أفواف % % 58(@)(@@) % نظمتها لك والنجوم كأنها % % في الافق من تعب المسير غواف % % 59(@)(@@) % والنسر ينهض بينها بقوادم % لكنهن عن العيان خواف % % 60(@)(@@) % فأتتك من صنف الجمال بديعة % % والنظم مثل بنيه ذو إنصاف % % PageV01P1259 61(@)(@@) % في الناس من يمشي على رجلين في % % نظم ومن يمشي على أخلاف % % PageV01P1260 البحر : - 1(@)(@@) % مسلسل من حديث الدمع مذروف % % ينبيك ان حديث الصبر مصروف % % 2(@)(@@) % وان كل مقال العذل مخرفة % وكل ما نقل الواشون تحريف % % 3(@)(@@) % ليت الوشاة على خيط فكلهم % % يداه مشلولة واللحظ مكفوف % % 4(@)(@@) % آها لقدك غصنا كله ثمر % لو أنه ببنان اللثم مقطوف % % 5(@)(@@) % وتبر خدك دينارا له لمع % لو أنه لعيان الطرف مصروف % % 6(@)(@@) % أفدي التي تشتكي مني هوى ولها % % بالردف والخصر تثقيل وتخفيف % % 7(@)(@@) % تدعو على الكثب والأغصان لاعبة % % فالكثب مهتوفة والغصن مقصوف % % 8(@)(@@) % لي في القصائد تشبيب بها ولها % % على جريح الحشا باللحظ تذفيف % % 9(@)(@@) % قالوا حكى القمر التمي طلعتها % % قلنا صدقتم ولكن فيه تكليف % % 10(@)(@@) % كما حكى نيل مصر جود سائدها % % لو لم يكن في وفاء النيل تسويف % % PageV01P1261 11(@)(@@) % ندب عطفت أماديحي على نسق % من فضله حبذا للفضل معطوف % % 12(@)(@@) % مدبر الملك بالأقلام يقدمها % % في الجود والبأس تحويل وتخويف % % 13(@)(@@) % بادي السعادة لو بثت مناقبه % % في الافق لم يبد في الاقمار مخسوف % % 14(@)(@@) % طلق الاسرة يعطي حيث وجه ذكا % % كأنه بغبار المحل مكسوف % % 15(@)(@@) % يا من يعنفه في صنع مكرمة % هيهات أن يروع العشاق تعنيف % % 16(@)(@@) % في كفه قلم الانشاد منشأه % % فضل وفصل وتعريف ومعروف % % 17(@)(@@) % فتوح ملك من الاسجاع خص به % % هذا وذاك وسجع الناس توقيف % % 18(@)(@@) % وفضل نظم له 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms252# من بيته شرف % فهو الرضي وباقي النظم مشروف % % 19(@)(@@) % خطافة لب رائيه براعته % % ووجه حاسدها بالروع مخطوف % % 20(@)(@@) % وصاحب السر قد سر الزمان به % % صدر الندي وللآلاء توطيف % % PageV01P1262 21(@)(@@) % كم قاصد جاء في جهر وآخر في % % سر وللكل إنعام وتشريف % % 22(@)(@@) % وكم تلطف كتب في رسائله % % وطيها لمزاج الخطب تلطيف % % 23(@)(@@) % تسيل في الطرس أرواح العداة به % % حتى كأن يراع الطرس مرعوف % % 24(@)(@@) % فالبر والبحر ذا بالأمن منبسط % وذاك من خجل بالجود مرجوف % % 25(@)(@@) % وكل عاف بحرف الخط متصل % وكل عاد بحرف السيف محذوف % % 26(@)(@@) % شكرا لعطف واعراض لديك هما % % لعبد أبوابكم بر وتثقيف % % 27(@)(@@) % أعرضت عنه فوالت حربه فئة % شاكوا السلاح فتضريب وتسييف % % 28(@)(@@) % وما شكوت وماالشكوى إلى بشر % من خلق مثلي والاقدار تصريف % % 29(@)(@@) % حتى اذا غبطت المكرمات عفت % % تلك الهناة وكروا بعد ما عيفوا % % 30(@)(@@) % ان ساء قوما مقامي منشدا مدحا % لساءهم لي تشريف وتسريف % % PageV01P1263 31(@)(@@) % كم خلعة قلت للاحي وقد حضرت % % وعض لحيته للغيظ ذي صوف % % 32(@)(@@) % وحبذا وبر قد غصت فيه غنى % وكان لي وبر بالفقر منتوف % % 33(@)(@@) % وغلة طاف أولادي فقلت لهم % % أسعوا لها يا عفاة البيت أو طوفوا % % 34(@)(@@) % سمراء حنطية يغتر مبسمها % % فكلها بشفاه اللثم مرشوف % % 35(@)(@@) % دقت يد الرزق بابي وهي ناشزة % فقلت كس اخت رزق فيه تعسيف % % 36(@)(@@) % وعلمتني نظم الشعر من درر % ما بيت واحدها بالفقر مزحوف % % 37(@)(@@) % هذا هو الخبز يا أجناد أدعية % % وفي المجاريب حرب الليل مصفوف % % 38(@)(@@) % خبز وخير وجبر بعد ما نطقت % % فللمحامد تجنيس وتصحيف % % 39(@)(@@) % لينطق الجود بعد العي ذا مدح % تأتي وما عندها في القول تكليف % % 40(@)(@@) % لا زلت ممتدحا مني بنظم فتى % في المادحين فلا يثنيه معروف % % PageV01P1264 41(@)(@@) % تجل عن نظم وراق مدائحه % % وعن ثنا فيه للجزاز تقطيف % % 42(@)(@@) % نظفت فكري لكم من حب ذي قلم % % فان شرط وعآء الحب تنظيف % % PageV01P1265 البحر : - 1(@)(@@) % بقيت لحمد مثل فضلك واف % % وكافاك عنا الله خير مكاف % % 2(@)(@@) % ولا زلت مسرورا بنشر محامد % وذخر أجور واتصال عواف % % 3(@)(@@) % ومجد على الأنصار شف سناؤه % % وعلم لأدواء البصائر شاف % % 4(@)(@@) % وبر اذا خان الزمان موكل % برآء وفآء للأنام وقاف % % 5(@)(@@) % ومنح وصفح ذاك معف لمخطيء % وذاك صريح 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms253# المكرمات لعاف % % 6(@)(@@) % ولفظ هو العذب الطهور وطالما % % أدار على الأفهام صرف سلاف % 7(@)(@@) % لك الله بحرا إن خبا البحر دره % % فأحسن منه در بحرك طافي % % 8(@)(@@) % وندبا أطارت طائر المدح واجبا % قوادم من نعمائه وخواف % % 9(@)(@@) % فما رأيه عن قاصديه بغافل % وما طرفه عن وافديه بغاف % % 10(@)(@@) % وتدبير ملك مع تورع زاهد % إلى وثب عزم مع سكون عفاف % % PageV01P1266 11(@)(@@) % أخا العلم في عقل ونقل حوى المدى % % وفاق على الماضي بغير خلاف % % 12(@)(@@) % وذا المجد في دنيا وأخرى فياله % % مضافا اليه واصلا بمضاف % % 13(@)(@@) % أتى جودك المروي صداي ولم أسل % % ولا طرق السمع الكريم نشاف % % 14(@)(@@) % ودق علي الباب رزق ولم أسر % % أدق بكعبي متعبا بطوافي % % 15(@)(@@) % و قابلتها غر الوجوه كثيرة % % جرت بحروف قد صرعن حرافي ش % % 16(@)(@@) % ثقالا بمنديلي ألذ بثقلها % % و أخطر من بعد الحفا بخفاف % % 17(@)(@@) % و أسحب والأولاد فضل ملابس % نصافي بها الأيام حين نصافي % % 18(@)(@@) % و نشكر والأعضاء ألسنه ندى % % يديك وندعو والزمان مواف % % 19(@)(@@) % دعا صالح منا ومدح مؤيد % % و حقك لا في ذا بعثت ولا في % % 20(@)(@@) % رعى الله أيام الإمام محمد % % فكم نعم ردت إلى شراف % % PageV01P1267 21(@)(@@) % و لو سمته رد الشباب لرده % % علي وقد مرت علي سوافي % % 22(@)(@@) % ألم تر أني قد حرمت بمدحه % % إلى غزل للشائبين مناف % % 23(@)(@@) % فآها لعلات الروادف برحت % % بأكباد قوم مستنين عجاف % % 24(@)(@@) % و آها على عصر الشباب الذي مضى % % وأودى فليت الحادثات كفافي % % 25(@)(@@) % فراشي كما قيل الحسان نواعما % لديه ومسحوب الشعور لحافي % % 26(@)(@@) % زمان لقا أستغفر الله ليته % % تقضى ولم أنعم زمان تجافي % % 27(@)(@@) % فيا آمري اليوم بالغي أمسكا % % فقد مر من تلك الغواية كاف % % 28(@)(@@) % و يا سابق النعمى لراجيه لا تزل % % تلافي حياة المرء عند تلافي % % 29(@)(@@) % فبطني شبعان وظهري كأنه % % لساني ما بين البرية داف % % PageV01P1268 البحر : - 1(@)(@@) % كل الجوانح قلب فيك مشغوف % % وما لحاصل حبي عنك مصروف % % 2(@)(@@) % ذكري بخاطرك الناسي مصادفة % % وخاطري عن سوى ذكراك مصدوف % % 3(@)(@@) % يا ظبية من ظباء الحي نافرة % % حتام هجرك شيء منك مألوف % % 4(@)(@@) % ويل لجفني لا جفنيك من سهر % % لكيله في الدجى خسر وتطفيف % % 5(@)(@@) % ياباذل الوفر في الدنيا لآخرة % % بشراك فرض 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms254# على الأخرى وتسليف % % 6(@)(@@) % عذرا لنظمي والدنيا مطابقة % % شكواي مستورة والحال مكشوف % % 7(@)(@@) % وضعف فكري عن نظم القريض له % % كالعد في رقعة الشطرنج تضعيف % % 8(@)(@@) % لا زلت أنشد قولي فيك من قدم % % وأنت بالخلعة الزهراء محفوف % % 9(@)(@@) % أهل يهنيك بالتشريف محتفلا % % يا من بأيامه المعروف معروف % % 10(@)(@@) % لكنني بك أختار الهناء لها % % فإن قدرك للتشريف تشريف % % PageV01P1269 البحر : - 1(@)(@@) % كم لي على حب طرفه % % بنثرة الدمع صرفه % % 2(@)(@@) % وكم لها من شجون % % أمام قلبي وخلفه % % 3(@)(@@) % وكم بجود علي % أغنى رجا الوفد كفه % % 4(@)(@@) % وفاض لي منه بحر % في جنبه البحر غرفه % % 5(@)(@@) % وشل كف افتقار % % عن راحتي وكفه % % 6(@)(@@) % للمال سرا وجهرا % % لصاحب السر عطفه % % 7(@)(@@) % ياقادما لي ومثلي % % بفضل رؤياه طرفه % % 8(@)(@@) % ليهنك العام تلقى % % ألف السعادة ألفه % % 9(@)(@@) % أكرم بقصدك حجا % وحول بابك وقفه % % PageV01P1270 البحر : - 1(@)(@@) % يا من له في طريق زهد % % حال وفي المشكلات كشف % % 2(@)(@@) % قل لي ما مبهم جلي % % وفيه للواصفين خلف % % 3(@)(@@) % يعد حرفان حين يملى % % بغير شد وقيل حرف % % 4(@)(@@) % وهو كما قد ترى خفيف % % وفيه لطف وفيه ظرف % % 5(@)(@@) % مع أنه من عجيب أمر % يجر طودا وفيه لطف % % 6(@)(@@) % وان عسكت الحروف منه % % فبلدة ما تكاد تصفو % % 7(@)(@@) % ألغازه في ضحى وممسى % % فليس يخفى وليس يخفو % % 8(@)(@@) % ذكرته في عديد وصف % % فلا يفت مسمعيك وصف % % 9(@)(@@) % وان خفى زائدا فأعرض % % عنه ودع منطقي يكف % % 10(@)(@@) % فان لفظي الفداة مثلي % % أصبح والله فيه ضعف % % PageV01P1271 البحر : - 1(@)(@@) % زادت شجوني فيه عن حد السرف % % وجرى عليه مدمعي حتى وقف % % 2(@)(@@) % متمنع تلقاه في حال الرضا % % وكأنه غصبان من فرط الصلف % % 3(@)(@@) % ألف الصدود تجنبا وتحجبا % فلو أنه رام التواصل ما عرف % % 4(@)(@@) % ومن الشقا أن الجفا وتشوقي % % لا ينتهي هذا وذاك إلى طرف % % 5(@)(@@) % ما مال غصن قوامه عن فكرتي % % يوما ولا دينار وجنته انصرف % % PageV01P1272 البحر : - 1(@)(@@) % سكنت بالنيل لو لم تكن % % جيرانه لم تك بالشافي % % 2(@)(@@) % كفاك جيران نيل الأذى % % فحبذا النيل بالكاف % % PageV01P1273 البحر : - 1(@)(@@) % أحاجيك ما حلو اللسان وأنه % % لأخرس لا تعزى اليه المعارف % % 2(@)(@@) % يرى جالسا في الصدر مادام كاملا % فإن نقصوه فهو في الأرض طائف % % PageV01P1274 البحر : - 1(@)(@@) % مننت بحل اللغز معنى وصورة % فلله موصوف لديك 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms255# وواصف % % 2(@)(@@) % ووطنني ان بل بالقطر جسمه % % فها هو مبلول وها أنا ناشف % % PageV01P1275 البحر : - 1(@)(@@) % يحير الغصن بين اللين والهيف % % ويفضح الظبي بعد الجيد والعطف % % 2(@)(@@) % أغن لم يبق مرأى حسنه بشرا % خال من الوجد يلحاني على شغفي % % 3(@)(@@) % يا حبذا البدر حاز التم أجمعه % % وزاد في مهج العشاق بالكلف % % 4(@)(@@) % غزال رمل ولكن غير ملتفت % و غصن بان ولكن غير منعطف % % 5(@)(@@) % يشكو السقام إلى أجفانه جسدي % % فاعجب له دنفا يشكوا إلى دنف % % 6(@)(@@) % متى يحقق وعدا من تواصله % % و المنع ينظر من وجه إلي خفي % % 7(@)(@@) % في الخد لام وفي عطف الصبا الف % % و آلة المنع بين اللام والألف % % 8(@)(@@) % هلا سوى سحر ألفاظ تلفت به % % فكان في قصد موسى مانع تلفى % % 9(@)(@@) % مشير ملك تجلى رأيه فسطا % % بالخصب يطو بياض الصبح في السدف % % 10(@)(@@) % فاق البرية في عدل ومعرفة % % فليس عن رتب العلياء بمنصرف % % PageV01P1276 11(@)(@@) % سجية في اقتضاء الحمد ناشئة % على الندى والسدى والمجد والشرف % % 12(@)(@@) % وهمه دبر الاسلام كافلها % % تدبير متصف بالحق منتصف % % 13(@)(@@) % يا جائل الطرف في السادات منتقدا % ها قد وصلت إلى أزكاهم فقف % % 14(@)(@@) % وقد وجدت معاني الفضل باهرة % فان قدرت على أوصافها فصف % % 15(@)(@@) % دار الثناء على القطب الذي اتفقت % % فيه العقول فلا قول بمختلف % % 16(@)(@@) % لا تبغ منزل فضل بعد منزله % % من حل طيبة لم يحتج إلى النجف % % 17(@)(@@) % من معشر نجب ما زال مجدهم % يوصي به السلف الماضي إلى الخلف % % 18(@)(@@) % شاد المعالي بنوا خاقان واجتمعوا % % في واحد بمعاني البيت مكتنف % % 19(@)(@@) % قد قدمته على السادات همته % % في الفضل تقديم بسم الله في الصحف % % 20(@)(@@) % كافي الجيوش بآراء مناضلة % تكاد ترعد منها أنفس النطف % % PageV01P1277 21(@)(@@) % فلا جناح بمنهاض اذا عضدت % % من جانبيه ولا قلب بمرتجف % % 22(@)(@@) % في كفه قلم كالسيف منتصب % لكنه لبني الآداب كالهدف % % 23(@)(@@) % جار بكف سهيلي العلى فلذا % % كم في المهمات من روض له أنف % % 24(@)(@@) % أمل عطاياه واستعرض فضائله % % فما يرد جناه كف مقتطف % % 25(@)(@@) % وشم بعينك في الدنيا محاسنه % % اذا دلفت ودعنا من أبي دلف % % 26(@)(@@) % قالوا أفي بأسه أم في سماحته % % فقلت في ذا على رغم الحسود وفي % % 27(@)(@@) % يا من تحملت 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms256# في أبوابه نعما % لاعيب فيها سوى أن أثقلت كتفي % % 28(@)(@@) % تهن بالمنصب الميمون طائره % % واقبل لدستك يا موسى ولا تخف % % 29(@)(@@) % واغفر جناية أيام قد اعتذرت % % وابشر بسعد على الأيام مؤتلف % % 30(@)(@@) % الله يعلم فيما أنت واجده % % ونور حظي من بشري ومن أسفي % % PageV01P1278 31(@)(@@) % لي في جنابك برج غير منقلب % اذا التجأت ونجم غير منكسف % % 32(@)(@@) % ففي ولائك توكيدي اذا اختلفت % % حال امرىء والى علياك منعطفي % % 33(@)(@@) % حلفت أنك معدوم النظير فما % % راجعت فكري وما استثنيت في حلفي % % 34(@)(@@) % بستان حسن لا عدمت قطافه % لثما يسلفني السرور سلافه % 35(@)(@@) % يختال في مرح الشباب كأنما % % هزت حمائم حليه أعطافه % 36(@)(@@) % في وصفه الأغزال خص مديحها % % ملك البسيطة لا تريد خلافه % 37(@)(@@) % الناصر بن الناصر بن قلاون الم % % نصور جانس نصره أسلافه % 38(@)(@@) % خضعت لعزته الملوك وأذعنت % % لأغر أمله الزمان وخافه % 39(@)(@@) % خدمته حتى أنجم مريخها % % لو عاد كسرى ظنه سيافه % 40(@)(@@) % ولو أن ذا الاكتاف سابورا عصى % % أمرا لقطعت العصا أكتافه % PageV01P1279 41(@)(@@) % متع لواحظنا بحسنك ساعة % ودع النفوس تروح وهي توالف % % 42(@)(@@) % واجعل وعودك لي صدودا قابلا % فلقد أراك اذا وعدت تخالف % % 43(@)(@@) % ويلاه من ساج اللواحظ أهيف % % مالي عليه سوى البكاء مساعف % % 44(@)(@@) % يوم الغنى يهواه عاما كله % % بالدمع شات والصبابة صائف % % 45(@)(@@) % سل خصره عن طول ليلة شعره % % إن السقيم بطول ليل عارف % % 46(@)(@@) % أسفي للدراهم الحلبيا % % ت فقد فرحت حشاي وطرفي % % 47(@)(@@) % أكلتني كفي عليها مرارا % % وعليها أصبحت آكل كفي % % 48(@)(@@) % يا لها حالة تكدر عيشي % % وزمان في وجه قصدي يصفي % % 49(@)(@@) % أقول لمن يتشكي الخطوب % % ويحذر من موبقات الصروف % % 50(@)(@@) % عليك بأبواب سيف العلا % % ملاذ الفقير وأمن المخوف % % PageV01P1280 51(@)(@@) % تجد ظله جنة والجنان % % بلا شك تحت ظلال السيوف % % 52(@)(@@) % هنئتها خلع السيادة والتقى % % والبر والبركات والالطاف % % 53(@)(@@) % وبقيت ممدوح العلا عينا لها % % ألف الندى ولكل ملك كافي % % 54(@)(@@) % يا صاحب القلم الذي في بابه % % عرف وعرف ندى بغير خلاف % % 55(@)(@@) % خليلي كفا عني الشغل بالهوى % % فعندي من فقد الصبا شاغل كافي % % 56(@)(@@) % صفا لون شيبي ثم كدر عيشتي % % فيا عجبا للشيب من كدر صافي % % 57(@)(@@) % ومرخى على الاكتاف يضحك من يرى % % فأواه من شيب يقطع أكتافي % % 58(@)(@@) % جاء 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms257# بالخصب الينا كافل % % آمن في عدله كل مخوف % % 59(@)(@@) % فدمشق اليوم والدنيا معا % في فنون للتهاني وصنوف % % 60(@)(@@) % جنة في ظل سيف قادم % % وكذا الجنات في ظل السيوف % % PageV01P1281 61(@)(@@) % قل للذي قد كنت معترفا % من بحر أنعمه ومغترفا % % 62(@)(@@) % عجز اجتهاد الشكر عن منن % % قدمتها عندي فيا أسفا % % 63(@)(@@) % ان كنت لا تسدي الي يدا % حتى أقوم بشكر ما سلفا % % 64(@)(@@) % وكنت اذا جفوتم أو كدرتم % % أحن اليكمو أبدا وأصفو % % 65(@)(@@) % إلى أن زرتمو فثنيت طرفي % % وعلمني جفاكم كيف أجفو % % 66(@)(@@) % فما دمعي على العادات جار % ولا قلبي على التبريج وقف % % 67(@)(@@) % بالجنك من مغنى دمشق حمائم % % في دف أشجا تشوق بلطفها % % 68(@)(@@) % فاذا أشار لها الشجي بكأسه % % غنت عليه بجنكها وبدفها % % 69(@)(@@) % أتى الملبس الصوف الذي قد بعثته % % لجبري يا أندى الأنام وتشربفي % % 70(@)(@@) % فقابله الشكران شكر قصائدي % % و سجعي والشكران من واجب الصوفي % % PageV01P1282 71(@)(@@) % تغير بدر الدين بعد مودة % و حالت به الأيام عن ذلك الوفا % % 72(@)(@@) % و دل على أن الوداد مكلف % % و لا عجب للبدر أن يتكلفا % % 73(@)(@@) % عندي غلام بعلم الحرف مشتغل % % و أي حرف إلى الفحشاء منحرف % % 74(@)(@@) % أحكى الأنام لدال في تفاجعه % % و أنفق الناس من ميم على ألف % % 75(@)(@@) % خليلي كيف الصبر عن حب شادن % % شهي اللمى ساجي للواحظ أهيف % % 76(@)(@@) % يحاول بدر التم تشبيه وجهه % % فيحسن إلا أنه يتكلف % % 77(@)(@@) % هنئت بالعيد يا من يستضيئ به % % في الناس حالي ومن بالحمد أعطفه % % 78(@)(@@) % الناس تعرف عيدا بالهلال اذا % % وافى ولكنني بالبدر أعرفه % % 79(@)(@@) % فديت رئيسا عندنا من نواله % % الوف وصد بعد ذاك خفيف % % 80(@)(@@) % فان يكن العقل الذي سآء واحدا % فافعاله اللآئي سررن ألوف % % PageV01P1283 81(@)(@@) % يا رب فاتنة الجمال غريرة % % تحمي ورأء أسنة وسيوف % % 82(@)(@@) % صغت الوعود لها صياغة ماهر % و جمعت بين خلاخل وشنوف % % 83(@)(@@) % قاضي القضاة لك اتصال سلامة % % ولحاسديك مساءة وتلاف % % 84(@)(@@) % ما كان في رجفان كفك منكر % % فالبحر من أسمائه الرجاف % % 85(@)(@@) % مملوكة عندي رومية % % كم نشفت رأسي وما من شفه % % 86(@)(@@) % بعثتها مع بعض شعري وقد % % خلصت في الحالين من منشفه % % 87(@)(@@) % يا صاحبا أسعى إلى بابه % % وأشتكي الفاقة والكلفه % % 88(@)(@@) % شهرك ذو القعدة فاهنأ به 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms258# % % وارحم من المملوك ذي الوقفه % % 89(@)(@@) % أمزق قلبي في هواك تحرقا % % وجفني تسهيدا وليتك تعرف % % 90(@)(@@) % ولي أسف باد من الحزن انما % % على مثل لقياك ابن يعقوب يوسف % % PageV01P1284 91(@)(@@) % يا قريرا بالمنى يا سيدي % % يا صديقا للتهاني ألفا % % 92(@)(@@) % أن ايري يا لعقبى ايركم % % كان ياء ثم أمسى ألفا % % 93(@)(@@) % أرادت تضاهي حسنه وصفاته % % بدور وغزلان فقلت لها قفي % % 94(@)(@@) % بعيشك يا غزلان لا تتعيبي % % عليه ويا أقمار لا تتكلفي % % 95(@)(@@) % و لي صديق أرجفته مدحتي % % وكالان ظني أنه لا يرتجف % % 96(@)(@@) % فقل له يابحر علم وندى % % أنا الذي لو جاء للبحر نشف % % 97(@)(@@) % خف خصر الحبيب ثم ابتلاني % % بعذول يزيدني تعنيفا % % 98(@)(@@) % ليت لو كان في الملاح كمثلي % % في هوى الخصر يؤثر التخفيفا % % 99(@)(@@) % لنون صدغك آية فتنت % % بحسنها كل طامح الطرف % % 100(@)(@@) % يسبح الله حين يبصرها % % فيا له عابدا على حرف % % PageV01P1285 101(@)(@@) % أفنى التي تاجها وقامتها % % كأنه همزة على ألف % % 102(@)(@@) % أذكر ثغرا لها فأسكر من % % ورود خد لها فأرتع في % % 103(@)(@@) % قولا لنور الدين عن خله % % خل الجفا وارجع لذاك الوفا % % 104(@)(@@) % ياحجري الوصف من نسبة % % حقا لقد عاملتني بالصفا % % 105(@)(@@) % شكرا لأنعم مولانا التي فضلت % % جهد الثناء فأبدي وجه معترف % % 106(@)(@@) % لو لم أكن للغنى أبغي تطلبها % % طلبتها كونها نوعا من الشرف % % 107(@)(@@) % يا سيدي دعوة من قوله % يا سيدي يوجب تشريفه % % 108(@)(@@) % حملت بالإحسان تثقيله % % فاحمل باحسانك تخفيفه % % 109(@)(@@) % صيرت إيري واقفا من شرطه % % إثبات عشقي واطراح مخالفي % % 110(@)(@@) % فليدر حسنك أن قلبي فيه قد % % ثبتت صبابته بشرط الواقف % % PageV01P1286 111(@)(@@) % بات انفي يشكو زكاما وقد كا % % ن التشكي من الحوادث يكفي % % 112(@)(@@) % أحمد الله لا أزال معنى % بأمور تأتي على رغم أنفي % % 113(@)(@@) % و دف أشجار سمعنا به % % ناعورة مطربة الوصف % % 114(@)(@@) % لا غرو إن شبب نظم الورى % % فيها قد غنت على الدف % % 115(@)(@@) % شافعي قل لمالكي أن في ن % % ثرة سطرين منه للفقر صرفه % % 116(@)(@@) % أترى هل يحج في وفي ق % % لبي جمار وعند حالي وقفه % % 117(@)(@@) % صرفت لجود تاج الدين قصدي % % ولم أر بعد ذا عنه انصرافه % % 118(@)(@@) % فقيل لي القرافة أشغلته % % وكم بنداه قيل لي الق رافه % % 119(@)(@@) % يا سيدي إن طاب وقت 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms259# ولائنا % % لفظا ففي معناه منك تعسف % % 120(@)(@@) % أنا في المدبح أشبب الوصف الذي % % أهدى وأنت على الجريح تذفف % % PageV01P1287 121(@)(@@) % قاضي القضاة حبذا تكرمة % % تنزه المملوك في صنوفها % % 122(@)(@@) % دراهم عن كلمات عددت % % فأقبلت تجري على حروفها % % 123(@)(@@) % أترى يا سادة لي كلما % % زدتهم في الود زادوا في الجفا % % 124(@)(@@) % هل كفى من فرط هجري ما جرى % % وجرى من دمع عيني ماكفى % % 125(@)(@@) % رجلي وحالي لغير نافع % % أصبح هذا لذا يخالف % % 126(@)(@@) % الرجل طول النهار تمشي % % والحال طول النهار واقف % % 127(@)(@@) % قل ليراع الإمام شيخ شيوخ الو % % قت ما حي الإعساروالحيف % % 128(@)(@@) % يا قلم العلم والبلاغة كن % % شفيع آمالنا إلى السيف % % 129(@)(@@) % علقته ساجي اللواحظ أهيفا % % وبليتي ساجي اللواحظ أهيف % % 130(@)(@@) % قلبي الجريح مشبب بصفاته % % في الحسن وهو على الجريح يذفف % % PageV01P1288 131(@)(@@) % يقول لي امرؤ كتاب مصر % % بأخبار لها وقت منيف % % 132(@)(@@) % فهل عجزا احتيالك أن تهيئ % % لهم خبزا فقلت ولا رغيف % % 133(@)(@@) % ألا رب أحباب شغلت بحبهم % % زمان إلى أن غيروا بيننا الصفة % % 134(@)(@@) % فسليت قلبي من يديهم وعنهمو % % ونشفت دمعي من هواهم بمنشفه % % 135(@)(@@) % حملت الي شخصي الحباب وكاد من % % أذى البرد لا من زهرة يتقصف % % 136(@)(@@) % و كنت بفقري لا بعتقي أشتكي % % وأعجز عن حمل القميص وأضعف % % PageV01P1289 البحر : - 1(@)(@@) % عوذت شعرك بالظلام وما وسق % % وسناك بالقمر المنيراذا اتسق % % 2(@)(@@) % آها لها من طلعة في طرة % % لاحت فلا لاح الصباح ولا الغسق % % 3(@)(@@) % وهلال تم طالع في سعده % % لكن نجم حشاي فيه قد احترق % % 4(@)(@@) % رشأ وجدت العذل فيه باطلا % % لما وجدت بمقلتيه السحر حق % % 5(@)(@@) % زعم المشنع أنني واصلته % % ليت المشنع عن تواصلنا صدق % % 6(@)(@@) % بأبي الذي أجريت أحمر أدمعي % % في حبه فاذا ابتغى أمدا سبق % % 7(@)(@@) % يا للجوانح والبكاء تطابقا % % هذي مقيدة وذاك قد انطلق % % 8(@)(@@) % قم يا غلام وهاتها في حبه % % صفراء مشرقة كما وضح الشفق % % 9(@)(@@) % هذي الحمائم في منابر أيكها % % تملي الغنى والطل يكتب في الورق % % 10(@)(@@) % والقضب تخفض للسلام رؤسها % % والزهر يرفع زائريه على الحدق % % PageV01P1290 11(@)(@@) % فعسى تجدد لي زمان تواصل % % قد كان في اللذات معنى مسترق % % 12(@)(@@) % لا تسمعن بأن قلبي قد سلا % % ذاك الزمان وذاك قول مختلق % % 13(@)(@@) % تتخالف الاخبار لكن 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms260# الندى % % خبر عن الملك المؤيد متفق % % 14(@)(@@) % ملك خزائن ماله وعداته % % تشكو بأيديه التفرق والفرق % % 15(@)(@@) % البحر في كفيه أو في صدره % % فانهل وان ناويته فاخش الغرق % % 16(@)(@@) % ذاك الذي بالناس يفدى شخصه % % ويعاذ في ظلم الحوادث بالفلق % % 17(@)(@@) % للسيف في يمنى يديه جدول % % فلذا يفيض على جوانبه العلق % % 18(@)(@@) % وبكفه القلم الذي لا يشتكي % % فتق الامور لفضله الا رتق % % 19(@)(@@) % تجري البحار فلورمى بحر به % % لا نشق ذاك البحر غيظا وانفلق % % 20(@)(@@) % فيه مآرب للعلوم وللندى % % ان فاض راق وان أفاض القول رق % % PageV01P1291 21(@)(@@) % كالغصن يستحلى سنا أزهاره % % ويجود بالثمر الجني وينتشق % % 22(@)(@@) % فاز امرؤ ألقى يمين رجائه % % لمقام إسماعيل يوما واعتلق % % 23(@)(@@) % المرتجي والافق محجوب الحيا % % والملتجا والدهر مرهوب الحنق % % 24(@)(@@) % لله كم خضعت لعليا مجده % % رأس وكانت ذات صول لم يطق % % 25(@)(@@) % سارت سيادته وأمعن شوطها % % فغدت على الاعناق واصلة العنق % % 26(@)(@@) % وأراد أن يجري إلى غاياته % % صوب الحيا فلذاك ألجمه العرق % % 27(@)(@@) % النصر والدنيا الخصيبة والهدى % % ان صال أو بذل الصنائع أو نطق % % 28(@)(@@) % لاقيته فشفى رجاي وعانقت % % كفاي من جدواه أطيب معتنق % % 29(@)(@@) % وروائح المعروف لا تخفى على % % حال فشموا من أناملي العبق % % 30(@)(@@) % يا أيها الملك المؤيد دعوة % تذر العداة بغيظها تشكو الحرق % % PageV01P1292 31(@)(@@) % واصلت قصدي باللهى وقطعت ما % % بيني وبين بني الزمان من العلق % % 32(@)(@@) % فلأشكرن جميل ما أوليتني % % شكر الرياض الزهر للماء الغدق % % 33(@)(@@) % بمدائح أهلتني لنظامها % % فغدت محررة وعنقي مسترق % % 34(@)(@@) % درر خدمت بها علاك وانما % % عطفت على درر العلى عطف النسق % % PageV01P1293 البحر : - 1(@)(@@) % مابت فيك بدمع عيني أشرق % % إلا وأنت من الغزالة أشرق % % 2(@)(@@) % يا من تحكم في الجوارح حسنه % % فالقلب يؤسر والمدامع تطلق % % 3(@)(@@) % أنفقت عيني في البكاء وحبذا % % عين على مرآى جمالك تنفق % % 4(@)(@@) % وأخافني فيك العذول ومادرى % % إني لجودك في الهوى أتشوق % % 5(@)(@@) % قسما بمن جعل الأسى بك لذة % والدمع راحة من يحب ويعشق % % 6(@)(@@) % إن العذول هو الغني وأن من % % يفني عليك حياته لموفق % % 7(@)(@@) % لي من نصيب هواك سهم وافر % وسهام سحر من جفونك ترشق % % 8(@)(@@) % يمتار من دمعي عليك ذوو البكا % % فاعجب له من سائل يتصدق % % 9(@)(@@) % ولقد سقيت بكأس فيك مدامة % % في غيظ 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms261# لوامي عليك فلا سقوا % % 10(@)(@@) % وضممت من عطفيك غصن ملاحة % بالحلي يزهر والغلائل تورق % % PageV01P1294 11(@)(@@) % وقرأت في خديك بعد تأمل % % خطا به حب القلوب معلق % % 12(@)(@@) % ورزقت من جفنيك ما حسد الورى % % حظي عليه وهو رزق ضيق % % 13(@)(@@) % ونعمت باللذات وهي جديدة % ولبست ضوء الراح وهو معتق % % 14(@)(@@) % في ليل أفراح كأن هلاله % % للشرب ما بين الندامى زورق % % 15(@)(@@) % يا حبذا ليل نبيع به الكرى % % لكننا لا عن رضى نتفرق % % 16(@)(@@) % حيث الشباب إلى المسرة راكض % % لا يستقر وطالب لا يرفق % % 17(@)(@@) % سقيا لأوقات الشبيبة إنها % % أوفى لمطلب السرور وأوفق % % 18(@)(@@) % ما سرني أن الكميت تحثها % % نحوي السقاة وأن فودي أبلق % % 19(@)(@@) % عني بكأسك يا نديم فإن لي % % جفنا مدامعه أرق وأروق % % 20(@)(@@) % زال الصبا ونأى الحبيب فعادني % % أرق على أرق ومثلي يأرق % % PageV01P1295 21(@)(@@) % وكأن عيني راحة ملكية % % حلف النوال بأنها لاتطبق % % 22(@)(@@) % نشأ النوال الأفضلي فلم نسل % % في الأفق هل نشأ الغمام المغدق % % 23(@)(@@) % إن كان في الكرماء رسل سماحة % فمحمد منها الأخير الأسبق % % 24(@)(@@) % ملك أقام على حماه وذكره % بالمكرمات مغرب ومشرق % % 25(@)(@@) % ماضره والفعل فعل باهر % % طلب السهى والاصل أصل معرق % % 26(@)(@@) % من أسرة تقوية حظ الأولى % % يوم الفخار لقهرها أن يتقوا % % 27(@)(@@) % النجم بعض ديارهم فلينزلوا % % والنجم بعض حدودهم فليرتقوا % % 28(@)(@@) % إن فاخروا بقديمهم لم يدفعوا % % أو سابقوا بجديدهم لم يلحقوا % % 29(@)(@@) % إن يفن ماضيهم على سنن الردى % % فكأنهم ببقاء أفضلهم بقوا % % 30(@)(@@) % الأرض واسعة بجدوى ملكهم % % والعدل في أيامه متوثق % % PageV01P1296 31(@)(@@) % ملأت موافقة القلوب مهابة % % فالقلب قبل الطرف فيها مطرق % % 32(@)(@@) % وكأنما صور الوقوف أمامه % % صور الدمى فمواثل لا تنطق % % 33(@)(@@) % سار على منهاج اسرة بيته % % ترجو البرية حالتيه وتفرق % % 34(@)(@@) % لا عيب فيه سوى عزائم قصرت % % عنها الكواكب وهي بعد تحلق % % 35(@)(@@) % وندى تتابع وفده حتى اشتكت % % نفحات أنعمه الفلا والاينق % % 36(@)(@@) % فياض سيب حين يزهى مجلس % % وخضيب سيف حين يعرو فيلق % % 37(@)(@@) % تلقاه بين مهابة ولطافة % % كالسيف فيه مضا وفيه رونق % % 38(@)(@@) % وتراه من لمع الاسنة سافرا % كالبدر بين كواكب تتألق % % 39(@)(@@) % حيث الغضا بين السلاح كأنه % % لج تحقق بنده يترقرق % % 40(@)(@@) % والطير تقربها الظبا فمن السماء % % والأرض تغشاه الضيوف وتطرق % % PageV01P1297 41(@)(@@) % يا أيها الملك 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms262# المكمل فضله % % وقيت من حدق اليك تحدق % % 42(@)(@@) % وبقيت للمداح تجلب عيسهم % % جلبا بغير بلادكم لا ينفق % % 43(@)(@@) % اذكرتنا زمن المؤيد لا غدت % % مثواه باكية الغمام تشهق % % 44(@)(@@) % حتى تجربه ذيول حديقة % % أكمامها بيد النسيم تفتق % % 45(@)(@@) % علياك علياه وخلقك خلقه % % فاهنأ بلبس مدائح لا تخلق % % 46(@)(@@) % وقدوم عيد كان من طرب إلى % % لقياك تخترق الصيام وتسبق % % 47(@)(@@) % وبديعة كالروض الا أنها % % تجلى بجارحة السماع وتعشق % % 48(@)(@@) % نظمتها عقدا لمثل مثاله % % في النظم شاب من الوليد المفرق % % 49(@)(@@) % وتلوت قاف معوذا من قافها % % خوفا عليه من النواظر أشفق % % 50(@)(@@) % لا فضل لي فيها وبحرك قاذف % % درر الصفات تقول للخلق انفقوا % % PageV01P1298 51(@)(@@) % من عش بيتك قد درجت وطار لي % % في الخافقين جناح ذكر يخفق % % 52(@)(@@) % وبكم علمت من القريض صناعة % % ما كنت لولاكم بها أتعلق % % 53(@)(@@) % لكم الولا مني لأن نداكم % % من كل حادثة له في معتق % % PageV01P1299 البحر : - 1(@)(@@) % بطيفك يابدر والطارق % % ومسبل شعرك والغاسق % % 2(@)(@@) % وقدك يا غصن واللحظ من % % رشيق يميس ومن راشق % % 3(@)(@@) % وطلق جبين قضى حسنه % % ببين على سلوتي الطالق % % 4(@)(@@) % أغث بأيادي الرضا مغرما % دعاك وخذ بيد العاشق % % 5(@)(@@) % فقد تعبت عينه في الهوي % % بانسانها السابح الغارق % % 6(@)(@@) % وعاقبها سيد ظالم % % عليها بذنب الكرى الآبق % % 7(@)(@@) % سكاب دموع جرت في مدا % % بكاها فأعيت على الآحق % % 8(@)(@@) % وسهر روى من بكاءي الذي % % تدفق عن جعفر الصادق % % 9(@)(@@) % وأمرد نشوان أما لقاه % % لعمري فمعذرة الفاسق % % 10(@)(@@) % منعم جسما ولكنني % % شقيت بمنظره الشقائق % % PageV01P1300 11(@)(@@) % وذي إمرة سار للقيل في % % جناحي لوا قلبي الخافق % % 12(@)(@@) % فكم مسلم خائف عند ما % % رنا من ظبا لحظه المارق % % 13(@)(@@) % وكم ذابل في العيون التي % % سناها بسهد لها ماحق % % 14(@)(@@) % فيفتح للجفن من مطبق % % ويعمل للقلب من طلبق % % 15(@)(@@) % بخد وخال على تبره % % يشح على قبلة الوامق % % 16(@)(@@) % فكم قلت بالتبر جد مرة % % علي فقال ولا الدانق % % 17(@)(@@) % وكم قلت ماالرفق قال الطلا % % وقسم ما أنت بالذائق % % 18(@)(@@) % ورب مدام تروق التي % % شربت على حسنه الرائق % % 19(@)(@@) % معتقة من ذوي الحجب في % % يمين محجبة عاتق % % 20(@)(@@) % و فاتكة كالمدام التي % % تدير على لينها مادق % % PageV01P1301 21(@)(@@) % تنزه في الثغر مبني في % % محل العذيب وفي بارق % % 22(@)(@@) % زمان شباب مضيء 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms263# مضى % % بعيش لنا فائز فائق % % 23(@)(@@) % و جاء مشيب على جانبي % % عذاري وحاشاك كالباصق % % 24(@)(@@) % فعيناي في الليل محلوقتان % % وفي اليوم من مائها الدافق % % 25(@)(@@) % و قلبي حران من لوعة % أتت من كئيب النوى الفارق % % 26(@)(@@) % و من زمن بعد ذاك الزمان % % عقوق كمثل اسمه عائق % % 27(@)(@@) % محاذق في الضر لي أفرقت % % خلاف القياس من الحاذق % % 28(@)(@@) % و حملت في الأرض من خطبه % % ذرا جبل في السما شاهق % % 29(@)(@@) % لسني بالفم كم قارع % ولحمي بالهم كم عارق % % 30(@)(@@) % و قلبي المعذب مع همه % % لدى القلب في مخلبي باشق % % PageV01P1302 31(@)(@@) % لعل صديق صديق بمصر % % يخفف بالشام عن عاتق % % 32(@)(@@) % بخطوة ساع مثاب إلى % % حمى الفضل والكرم السابق % % 33(@)(@@) % فنشكو فعال الزمان الغلام % % لسيده الفاتق الراتق % % 34(@)(@@) % علي السيوف لشأو العلى % % وحاتم في القوم من لاحق % % 35(@)(@@) % مجيد العطا ومجيد السطا % % بممتشق فيهما ماشق % % 36(@)(@@) % له الله من راتق في الورى % % أمورا كبارا ومن فاتق % % 37(@)(@@) % و ميكال دهر جديد على % % يديه تصب يد الرازق % % 38(@)(@@) % من الغرب والشرق راجوه لا % % يرد حماه رجا الطارق % % 39(@)(@@) % فيلقى الجويني في الوفد من % % ندى عنده مالقى المالقي % % 40(@)(@@) % على خلفاء كثير أبر % بسودده الراسخ السامق % % PageV01P1303 41(@)(@@) % فياعون المكتفي إذ بدت % % علاه ويا خجل الواثق % % 42(@)(@@) % فيا صائغ اللفظ صوغ الشنوف % % زهت في حلا سوقه النافق % % 43(@)(@@) % أغث مبعدا لاقيا للأسى % % يلوذ باحسانك اللائق % % 44(@)(@@) % صباح الطوى من دمشق التي % % خدمت ومن حلب فالق % % 45(@)(@@) % و في حلب راتب قانع % ولكن نعته يدا ناعق % % 46(@)(@@) % و عائلة أعولت كلما % % أطلت على نفسي الزاهق % % 47(@)(@@) % على أنني ولي الصبر قد % % ألفت بهذا الشقا الراهق % % 48(@)(@@) % فلو قيل فارق ولا تبتئس % % أيست لقولهم فارق % % 49(@)(@@) % و قد آن لي من يد العمر أن % % أسير إلى رحمة الخالق % % 50(@)(@@) % و ما فتر هذا الهلال القديم % % لخلق عليها سوى خافق % % PageV01P1304 51(@)(@@) % فداك محب عطفت الولا % % على حبه عطفة الناسق % % 52(@)(@@) % طفقت له مزويا نبته % % زمانا بطافحك الطافق % % 53(@)(@@) % و أحييت منه ومن لفظه % % لمن قد يرى رمق الرامق % % 54(@)(@@) % فكم من شهيد زكي على % % جميل ثناه وكم سابق % % 55(@)(@@) % و أنت الذي لم يزل بشره % % لظام وسار سنا بارق % % 56(@)(@@) % و انت الذي 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms264# في السهى قدره % % بعيوق شاهده الناطق % % 57(@)(@@) % لا بدع لفظك كم حاسد % كليم حشا دونه صاعق % % 58(@)(@@) % تنزه في روضة المجتلى % % على المرخ من همة اللاصق % % 59(@)(@@) % فعيناه في المرخ حيث اجتلت % % بديعا وأحشاه في دابق % % 60(@)(@@) % ملكت بحقل جلاد الجلال % % وحيدا فمزقت في مازق % % PageV01P1305 61(@)(@@) % و أفردت نظما سريا فما % % لبيتك في النظم من سارق % % 62(@)(@@) % و أبعدت بالرغم والعجز عن % % جنا دوحك الناضر الباسق % % 63(@)(@@) % فيا طرسي الثم ثراه المري % % ع ألفا ويا مدحه عانق % % 64(@)(@@) % و عش يا ربيب التقى والعلى % % لدى أمل بالوفا صادق % % 65(@)(@@) % و مبلغ علم باعجازه % % رمى في حشا الند بالحارق % % 66(@)(@@) % علومك يا دوح للمجتني % % وذكرك يا روض للناشق % % PageV01P1306 البحر : - 1(@)(@@) % قال العذول فزاد قلبا شيقا % % ما ضر يا مسحور دمعك لو رقى % % 2(@)(@@) % هيهات مع نأي الأحبة والضنا % % ترقى دموع العين أو تجدي الرقى % % 3(@)(@@) % ما زاد طرفي في الدموع تبحرا % إلا وزادني العذول تملقا % % 4(@)(@@) % أبكي الصبا بدموع عين كاد في % % شكوى الجفا إنسانها أن ينطقا % % 5(@)(@@) % آها لعهد صبا وعهد صبابة % % شب ادكارهما فشيب مفرقا % % 6(@)(@@) % يا من رمى هذا الرماد بمفرقي % % ماذا رمى قلبي الشجي فأحرقا % % 7(@)(@@) % و تفرقت جفناي عن دمع به % % أشرت وعن ميسور نوم أملقا % % 8(@)(@@) % إن يغن جفني البكاء فقد قلى % % عدم الكرى فيها وأن يتفرقا % % 9(@)(@@) % أفديك راشقة اللحاظ رشيقة % % يا لحظها وقوامها ما أرشقا % % 10(@)(@@) % عربية أروي لباسم ثغرها % % نظما لأكباد الحواسد مقلقا % % PageV01P1307 11(@)(@@) % تجفو ولو أني قبرت وسلمت % % سلمت تسليم البشاشة أوزقا % % 12(@)(@@) % و لربما عطفت وغصن قوامها % % بالحلي أثمر والذوائب أورقا % % 13(@)(@@) % و ضممتها في الحي أرشف ثغرها % % ثم انتبهت فلا العذيب ولا النقا % % 14(@)(@@) % طيفا ألم وما يظن بشاعر % % قاضي القضاة سميعه الا التقا % % 15(@)(@@) % أما الزمان فقد كساه نضارة % % قاضي القضاة ابن العلوم أبو البقا % % 16(@)(@@) % قاضي القضاة تهنها علياء ما % % برحت ببيتكم الممدح أليقا % % 17(@)(@@) % من ذا لذا ارثا وملكا عن رضا % لكم به النعمى وللأعدا الشقا % % 18(@)(@@) % و لنا بكم هذا الهناء المجتلى % % ولكم بنا هذا الثناء المنتقى % % 19(@)(@@) % لا تعدم المدح الحسان بهاءه % % وثناه مملا مغربا أو مشرقا % % 20(@)(@@) % ذو السؤدد الموروث والكسب الذي % % أثرى 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms265# فنفق ما رجاه ونطقا % % PageV01P1308 21(@)(@@) % عرقت جباه السائدين حياله % % وكذا يكون ابن السيادة معرقا % % 22(@)(@@) % أبناء خزرجها وعيبة نصرها % % هنئتم الشرف التقي ثم ارتقى % % 23(@)(@@) % ان يشبه الاسلاف أخلاق لقد % % رضع الرجا منها الغمام المغدقا % % 24(@)(@@) % أكرم به متحليا من مصره % % حتى أقام لسعدها متدمشقا % % 25(@)(@@) % يا وارث الانصار فضل سيادة % % أخذت على عهد المعالي موثقا % % 26(@)(@@) % يا من سجعت بمدحه اذ لم أزل % % بنداه ثم ندى ذويه مطوقا % % 27(@)(@@) % عذرا على تأخير عبد عنكم % أضحى بترسيم الهموم معوقا % % 28(@)(@@) % عرف الزمان بأنني أشكو إلى % % رحماك عدته فعاق عن اللقا % % 29(@)(@@) % بأليمه يا سيدي وأليمه % % لا أستطيع بشكوها أن أنطقا % % 30(@)(@@) % ومع اهتمام الهم بي فاستجلها % % عذراء قال ثناؤها ما أصدقا % % PageV01P1309 31(@)(@@) % جاءتك في شفق الحياء وانما % % وجدتك في الحسنى أبر وأشفقا % % 32(@)(@@) % يا من على جدواه أن يهمى الحيا % % وعلى نبات مدائحي أن تعبقا % % 33(@)(@@) % ان يغد مدحي عن ثناك مقصرا % فلقد يرى فوق النجوم محلقا % % PageV01P1310 البحر : - 1(@)(@@) % لرسوم الحمى عليه حقوق % % مدمع فائض وقلب خفوق % % 2(@)(@@) % ذاك يغني مولاه ان يسفح الغي % % ث وهذا ان تستهل البروق % % 3(@)(@@) % أين عيشي والشمل فيه جميع % % ومراحي وما استقل الفريق % % 4(@)(@@) % يا ديار الشهباء أحمر دمعي % % كل يوم إلى هواك سبوق % % 5(@)(@@) % كلما أسعر الغضا قلب صب % % سال من جفنه عليك العقيق % % 6(@)(@@) % إن دارا كمسجد بصفي الد % % ين يقضي بأن دمعي خلوق % % 7(@)(@@) % الأديب الذي به أدب الده % % فما يشتكي لديه عقوق % % 8(@)(@@) % و العريق الذي تسامت فروع % % من علا بيته وساخت عروق % % 9(@)(@@) % فاضل لقطنا له مفرق الحم % % د وفي بحره الخضم غريق % % 10(@)(@@) % ذو نظام له إذا قصر النا % % س على هامة السهى تحليق % % PageV01P1311 11(@)(@@) % و معال لو رامها نجم أفق % % عاقه عن لحاقها العيوق % % 12(@)(@@) % و ودادا اذا جفا الصحب يدنو % % وإذا كدر الزمان يروق % % 13(@)(@@) % و يرى لي حقا عليه وهيها % % ت له لا لحقي التحقيق % % 14(@)(@@) % هو والله سابق لي برا % وثنآء وغيره المسبوق % % 15(@)(@@) % قامت الناس في لقاه على سا % % ق وقامت لحلية الشعر سوق % % 16(@)(@@) % فأبوه عبد العزيز المرجى % % وأخوه زهر الرياض الشقيق % % 17(@)(@@) % و قصيد منه أتى ببديع % % هو حر المقال وهو 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms266# رقيق % % 18(@)(@@) % و خليق بجده الحسن فاعجب % % لجديد يلقاك وهو خليق % % 19(@)(@@) % حبس الغي عن وفاه يرعى % % بثلاث كأنه مخنوق % % 20(@)(@@) % كل بيت كأنه حان سكر % حيث صفى سلافه الراووق % % PageV01P1312 21(@)(@@) % ثم نادوا إلى الصبوح فقامت % % قينة في يمينها إبريق % % 22(@)(@@) % أي نظم صافي الحديث اذا ما % % عاقرته الألباب قيل عتيق % % PageV01P1313 البحر : - 1(@)(@@) % عللونا عند النوى بالعناق % % وامزجوا بالوداع كأس الفراق % % 2(@)(@@) % وصلونا يوم الرحيل فلا نط % % مع في أن نبقى ليوم التلاق % % 3(@)(@@) % ما عليكم من احمرار دموع % % تتحلوا بها مع الأطواق % % 4(@)(@@) % سامح الله حسنكم يوم تأتو % % ن وتلك الدماء في الأعناق % % 5(@)(@@) % يا خليلين من جواي ودمعي % % لا لقيتم من العنا ما ألاقي % % 6(@)(@@) % كلما مر من قضية سهد % أو جرى من بكى على الأحداق % % 7(@)(@@) % رب ظبي منكم أخضر العي % % ش وأفنى موارد الآماق % % 8(@)(@@) % منفذ في هواه حاصل دمعي % % وله سالف يريد الباقي % % 9(@)(@@) % تحت أصداغه عذار خفي % فهو بين السطور كالإلحاق % % 10(@)(@@) % كل يوم ينضو على عاشقيه % % سيف لحظ يسوقهم للساق % % PageV01P1314 11(@)(@@) % ما ترى مقلتيه تشكو فتورا % أتراها لكثرة العشاق % % 12(@)(@@) % غنني يا نديم باسم هواه % % وثناء الوزير في الآفاق % % 13(@)(@@) % يطرب الذكر عن مناقب يعقو % % ب كمثل اللحون عن إسحاق % % 14(@)(@@) % صاحب يصحب الثنا ويرقى % % درجات العلآء باستحقاق % % 15(@)(@@) % ان علت غاية وان جن دهر % % فهو في الحالتين أحسن راقي % % 16(@)(@@) % عشقت نفسه المعالي فجدت % % والمعالي قليلة العشاق % % 17(@)(@@) % كل أفعاله مناسبة النف % % ل فعوذ تجنيسها بالطباق % % 18(@)(@@) % همة في سنائها جازت الشه % % ب وأمسى الهلال ذا أطواق % % 19(@)(@@) % ووزير في مصر جاء مرجي % ه وغنى بمدحه في عراق % % 20(@)(@@) % ليس في عيب سوى أن نعما % % ه تحوز الأحرار باسترقاق % % PageV01P1315 21(@)(@@) % أطلقت كفه العطايا وقالت % % فهي مشكورة على الاطلاق % % 22(@)(@@) % وغدا بابه لمجتلب الحم % % د اليه بمجمع الأسواق % % 23(@)(@@) % ذو يراع جار بفصل القضايا % % واتصال العفاة بالأرزاق % % 24(@)(@@) % كلما ماس في المهارق كالغص % % ن رأيت الندى على الأوراق % % 25(@)(@@) % يا وزيرا قد عامل الله في الخل % % ق وما خاب طالب الخلاق % % 26(@)(@@) % بك شدت قريحتي بعد وهن % وبنعمى يديك حل وثاقي % % 27(@)(@@) % جودك المجتدى وامداحك الغ % % ر كنوز تبقى على الانفاق % % PageV01P1316 البحر : - 1(@)(@@) % رأى الغصن أعطاف 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms267# الغزال المقرطق % % فقام مقام المجتدي المتملق % % 2(@)(@@) % وجاوبه والدمع يخطي فما درى % % إلى البحر يمشي أم إلى البدر يرتقي % % 3(@)(@@) % وما نافعي اطراف طرفي دونه % % اذا كان طرف القلب ليس بمطرق % % 4(@)(@@) % لي الله قلبا في اتباع صبابة % % كعاذله من قال للفلك أرفق % % 5(@)(@@) % يميل لعذال الصبابة والهوى % % اذا شاء أن يلهو بلحية أحمق % % 6(@)(@@) % ويصغى إلى الواشي وليس بقائل % % ويقضي على علم بكل مخرق % % 7(@)(@@) % ويحثو تراب السبق في وجه عاشق % % أراه غباري ثم قال له الحق % % 8(@)(@@) % معنى بذي قد ثنى الرمح تابعا % لأدرب منه في الطعان وأحذق % % 9(@)(@@) % معنى بظبي ينهب الناس لحظه % % ويعزي إليهم كل سور وخندق % % 10(@)(@@) % من الترك إلا أنه أسمر اللمى % % لعوب بأطراف الكلام المشقق % % PageV01P1317 11(@)(@@) % بروحي من لم يلق مضناه عادل % % بمثل خضوع في كلام منمق % % 12(@)(@@) % مسدد نبل المقلتين كأنما % % يخير أرواح الكماة وينتقي % % 13(@)(@@) % يجفن رشا ان تسمه السحر لم يحد % % وإن تدعه حد الحسام فأخلق % % 14(@)(@@) % أباد قلوب العاشقين فلم يدع % % حبيبا لفاد أو رقيقا لمعتق % % 15(@)(@@) % وأغرق عذالي بدمعي ولم أرد % % ولكنه من يرجم البحر يغرق % % 16(@)(@@) % هوى كشأ الرأي الفلاني أنسبا % قنا ابن أبي الهيجاء في قلب فيلق % % PageV01P1318 البحر : - 1(@)(@@) % أبكيك للحسنين الخلق والخلق % % كما بكى الروض صوب العارض الغدق % % 2(@)(@@) % تبكيك رقة لفظي في مهارقها % % يا غصن فاسمع بكاء الورق في الورق % % 3(@)(@@) % وما أوفيك يا عبد الرحيم وإن % % بكت لك العين بعد الماء بالعلق % % 4(@)(@@) % ما زال مبيض دمعي داعيا لدمي % % حتى بكيت ظلال الحسن بالشفق % % 5(@)(@@) % وخددت فوق خدي للبكا طرق % % حتى رويت حديث الحزن عن طرق % % 6(@)(@@) % يا ساكن اللحد مسرور المقام به % % أرقد هنيئا فإني دائم الأرق % % 7(@)(@@) % وإن تعرض لي في الليل طيف كرى % % فلا تشقني وغيري ساليا فشق % % 8(@)(@@) % صح الوداد لقلبي والأسى فلذا % % أبكيك بالبحر لا أبكيك بالملق % % 9(@)(@@) % بني لولاك ما استعذبت ورد بكا % % ولا أنست بتسهيد ولا أرق % % 10(@)(@@) % ليصنع الدمع والتسهيد ما صنعا % % فإن ذلك محمول على الحدق % % PageV01P1319 11(@)(@@) % بني لا وجبين تحت طرته % % لم يخل حزنك لا صبحي ولا غسقي % % 12(@)(@@) % يهيج الليل نارا فيك أنكرها % % فإن صدقت فقلبي ليلة الصدق % % 13(@)(@@) % ويجلب 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms268# الصبح لي مما آساء به % % بياض شعر فيا فرقي ويا فرقي % % 14(@)(@@) % بني إن تسق كاسات الحمام فكم % % مليك حسن كما شاء الزمان سقي % % 15(@)(@@) % بني ان الردى كأس على أمم % ما بين مصطبح منها ومغتبق % % 16(@)(@@) % وللهلال على الأعمار قاطبة % % فتر يحاول منها كل مختنق % % 17(@)(@@) % والعمر ميدان سبق والحمام له % % مدى وكل الورى جار على طلق % % 18(@)(@@) % مارد سيف الردى سيف ابن ذي يزن % % ولا نجا تبع في الزعف والخلق % % 19(@)(@@) % ولا أحتمي عنه ذو سنداد في شرف % % ولا اختفت دونه الزباء في نفق % % 20(@)(@@) % كم نائح كالصدى مثلي على ولد % يقول واحرقي إن قلت واحرقي % % PageV01P1320 21(@)(@@) % ولا كمثلي في حزن فجعت به % % لكن أعلق صبري فيه بالعلق % % 22(@)(@@) % أدنيت للطرف قبرا أنت ساكنه % % عسى أساعد في شجوي وفي قلقي % % 23(@)(@@) % بالرغم ان بات يدر الأفق معتليا % وبات بدري مدفونا على الطرق % % 24(@)(@@) % كأنني لم أغن الليل من طرب % % ليل الحمى بات بدري فيك معتنقي % % 25(@)(@@) % يا ترب كم من فتور قد نثرت بها % % أعضاء حسن كمثل اللؤلؤ النسق % % 26(@)(@@) % وكم تركت بها كفا بلا عضد % % وقد توسدها رأس بلا عنق % % 27(@)(@@) % آها لها حسرات لو رميت بها % % ثهلان خل حصاة القلب لم يطق % % 28(@)(@@) % وأوجها كخلاص التبر قد جليت % % على الحمام عليها لؤلؤ العرق % % 29(@)(@@) % كانت رياضا لمستجل فما تركت % % منها الليالي سوى ذكر لمنتشق % % 30(@)(@@) % بني ليتك لم تعرف ولاءك في % % حبي فرحت بدمعي شاكي الغرق % % PageV01P1321 31(@)(@@) % وليت نجمك لم يشرق على سحري % % وليت برقك لم يومض على أفقي % % 32(@)(@@) % ما كان أقصر أوقات بك استرقت % % فليت عمري مقطوع على السرق % % 33(@)(@@) % ما كان أهداك في السن الصغير إلى % % فضل تجمع فيه كل مفترق % % 34(@)(@@) % فإن يغب منك عن جفني عطارده % % فقد رسيت بفكر فيه محترق % % 35(@)(@@) % مضيت حيث بقايا العمر تضعف لي % % واطول حزني مما قد مضى وبقي % % 36(@)(@@) % لا أهملتك عيون السحب هاملة % % ولا بعينيك ما يلقى الحشا ولقي % % 37(@)(@@) % فما أظنك ترضى حالة نعمت % % وأن قلبي بنيران الهموم شقي % % 38(@)(@@) % قد أخلقت جسدي أيدي الأسى فمتى % % للأرض ترمي بهذا الملبس الخلق % % PageV01P1322 البحر : - 1(@)(@@) % تشبيب مدحك مطرب لكنه % % حق لإطراب 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms269# المديح سباق % % 2(@)(@@) % قاضي القضاة ويا أبا الحسن الذي % % شرفت أصول علاه والأعراق % % 3(@)(@@) % يا ابن الذين اذا تحدث مادح % فاليهم ذاك الحديث يساق % % 4(@)(@@) % يا خير من لولائنا وثنائنا % % في بابه التقييد والإطلاق % % 5(@)(@@) % أعداك والأنعام في حال سوا % % حق لمثلهما دم مهراق % % 6(@)(@@) % فانحرهما في يوم عيدك وابق ذا % % مجد تضيء بذكره الآفاق % % 7(@)(@@) % لرقاب جزرك والعدى حد المدا % % ورقابنا من جودك الأطواق % % PageV01P1323 البحر : - 1(@)(@@) % ماذا من الشوق جناي والأرق % % برق على حمص كقلب خفق % % 2(@)(@@) % يا جاعلا في حمص قلبي لقد % % حمصت مشتاقك حتى احترق % % 3(@)(@@) % حتى اذا عاد إمام الهدى % % تساعد السعد فرق الفرق % % 4(@)(@@) % أعظم به تاجا لعليائه % % يعطف رد المدح عطف النسق % % 5(@)(@@) % من نعم الوهاب سبحان من % % جمل من أخلاقه ما خلق % % 6(@)(@@) % إذا كتبت السطر من مدحه % % أضاء في الطرس ضياء الفلق % % 7(@)(@@) % فلم يزد إلا بما زاد من % % بياضه فوق بياض الورق % % PageV01P1324 البحر : - 1(@)(@@) % جيوش حسنك ياذا الحسن متفقه % % لها من السقم عرض والبكا نفقه % % 2(@)(@@) % اذا رأواحلقات الصدغ دائرة % فكلهم جند أشجان من الحلقه % % 3(@)(@@) % ألحاظك النبل في أهل الغرام كما % % مال ابن يعقوب في أهل الرجا درقه % % 4(@)(@@) % ترد عن عرضه الأنقى فتبصرها % % محمرة من دما التبر الذي هرقه % % 5(@)(@@) % شيخ الشيوخ طريقا أو مباحثة % % وصاحب الستر من شغل ومن صدقه % % 6(@)(@@) % مولاي دعوة مطوي على شجن % لا يستكي لسوى إحسانكم حرقه % % 7(@)(@@) % لا تسألوا كيف حال منه ممحلة % % ما حال فرع نبات يشتكي ورقه % % PageV01P1325 البحر : - 1(@)(@@) % ونظم يجاري الناظمين جواده % % إذا شاء أن يلهو بلحية أحمق % % 2(@)(@@) % أتى من إمام منطقي فيه للثنا % % وللحب ما لم يبق مني وما بقي % % 3(@)(@@) % أبا الفتح لو فاتحت بحرا أو ابنه % % لقام مقام المجتدي المتملق % % 4(@)(@@) % ويامن له في العقل والنقل خاطر % % لعادله من قال للفلك ارفق % % 5(@)(@@) % لقد جدت حتى جدت في كل ناقل % وحتى أتاك الحمد من كل منطق % % 6(@)(@@) % وقلدتني شرف من النظم نعمة % أنرت بها ما بين غرب ومشرق % % 7(@)(@@) % أقول لها إذ صحفت نعت حاسد % % بعينيك ما يلقى الحسود ومالقي % % PageV01P1326 البحر : - 1(@)(@@) % يا تاركين للمحب أدمعا % قد وقع الحزن له إطلاقها % % 2(@)(@@) % والذاريات من دموعي 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms270# خلفة % ما نقضت أيدي النوى ميثاقها % % 3(@)(@@) % لو حنت الورق حنيني نحوكم % % لمزقت من أسف أطواقها % % 4(@)(@@) % ولو غدت تملي على الأغصان ما % % في كبدي لأحرقت أوراقها % % PageV01P1327 البحر : - 1(@)(@@) % مولاي ما متعب يلوح على الس % % مت والحي صنعة الفائق % % 2(@)(@@) % كأنه عاشق تهيج له الاوت % % ار شجوا وليس بالعاشق % % 3(@)(@@) % لسانه صامت على أكثر الاوق % % ات لكن قلبه ناطق % % PageV01P1328 البحر : - 1(@)(@@) % حوى فلكي عند الوزير وطالما % % أزيحت بجدوى راحتيه عوائقي % % 2(@)(@@) % وقد كان قدري عنده متدرجا % وبيتي عميرا بالندى المتلاحق % % 3(@)(@@) % فللدرج اللاتي حوت بت باكيا % وعائلتي تبكي لمنع الدقايق % % PageV01P1329 البحر : - 1(@)(@@) % يارب ظبي على ظبي ظفرت به % % فقام إيري مقام الطاعن اللبق % % 2(@)(@@) % وكاد يخترق الإثنين ذاك لذا % % كالفعل ينصب مفعولين في نسق % % PageV01P1330 البحر : - 1(@)(@@) % نأى بك الشام يا خلي فقلت عسى % % خل بمصر اذا بالموت قد طرقه % % 2(@)(@@) % يا دهر أعدمتني خلين رمت فدا % % صلاح صدق لآمالي وذا صدقه % % PageV01P1331 البحر : - 1(@)(@@) % غرس أياديك في هديته % % يطلب عذرا من جودك الغدق % % 2(@)(@@) % إن لم يكن قد أتاك ذا ثمر % % فإنه قد أتاك ذا ورق % % PageV01P1332 البحر : - 1(@)(@@) % يامن يطالع سقط الزند دونك من % % ألفاظه ما يباهي الزهر في الأفق % % 2(@)(@@) % لا تحسب العقد في الأعناق يشبهه % % فإن للزند حليا ليس للعنق % % PageV01P1333 البحر : - 1(@)(@@) % تقول بني الجائعون أما ترى % % من الجوع شكوانا لكل فريق % % 2(@)(@@) % وقد كنت ذا نظم وسعي ببرنا % % فلم جئت من هذا وذا بدقيق % % 3(@)(@@) % عليك بأبواب الامام محمد % % تجد فرجا منها لكل مضيق % % 4(@)(@@) % وما هي غل بيت مال لطالب % % ونصرة آمال ونجح طريق % % PageV01P1334 البحر : - 1(@)(@@) % أتاركة بالحزن قلبي مقيدا % % ودمعي على الخدين وهو طليق % % 2(@)(@@) % يقولون قد أخلقت جفنك بالبكا % % نعم ان جفني بالبكا خليق % % 3(@)(@@) % دعوا الدمع للجفن القريح مواخيا % فاني فقدت الخد وهو شقيق % % 4(@)(@@) % وساحرة الالحاظ حتى رضا بها % % رحيق وفي قلب المحب حريق % % PageV01P1335 البحر : - 1(@)(@@) % هددني بالدين في جلق % % مطالب يفض لي خلقا % % 2(@)(@@) % قلت له قاضي قضاة الورى % % لا زال يرعاني فما صدقا % % 3(@)(@@) % وقال فكر في حديث الوفا % % وخلني من لفظك المنتقى % % 4(@)(@@) % ويلك ان يفتح باب القضا % % فقلت بل ويلي أن يغلقا % % PageV01P1336 البحر : - 1(@)(@@) % كذا أبدا يا آل 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms271# أيوب ملككم % % له بالندى في الشرق والغرب اطلاق % % 2(@)(@@) % اذا ما سقيتم بالعطايا نباتكم % % توالت ثمار من نداه وأوراق % % 3(@)(@@) % و إني وإن عيقت عن السعي حجتي % % إلى وقفة في ذلك الباب مشتاق % % PageV01P1337 البحر : - 1(@)(@@) % في دعة الله سر سعيدا % ممدح الحلق والخلائق % % 2(@)(@@) % مفارق الطرف فيك غيري % % حيث سرت خيلك السوابق % % 3(@)(@@) % من أعلم الطرف حين تسري % % أنك تاج على المفارق % % PageV01P1338 البحر : - 1(@)(@@) % لا تعاتب من غير جرم ولا تج % % عل عقاب الأنام في الأرزاق % % 2(@)(@@) % و تعلم بأن حظك أوفى % % في اتصال الارفاد والارفاق % % 3(@)(@@) % لك منا صفو المحامد والأج % % ر وأرزاقنا على الخلاق % % PageV01P1339 البحر : - 1(@)(@@) % إني إذا آنست هما طارقا % عاجلت باللذات قطع طريقه % % 2(@)(@@) % و ذكرت ألفاظ الحبيب وكأسه % % فنعمت بين حديثه وعتيقه % % PageV01P1340 البحر : - 1(@)(@@) % و صارم كعباب الموج ملتمع % % يكاد يغرق رائيه ويحترق % % 2(@)(@@) % لما غدا جدولا تسقى المنون به % % أضحى يشف على حافاته العلق % % PageV01P1341 البحر : - 1(@)(@@) % سيدي قد كلفتني زوجتي % % حلقا فانظر إلى حالي الأشق % % 2(@)(@@) % كنت في الشعر أكدي برهة % % وأنا اليوم أكدي في الحلق % % PageV01P1342 البحر : - 1(@)(@@) % هنئتها خلعا تذكر من رأى % % نعماك للخضراء والعرض النقي % % 2(@)(@@) % كنت الأحق بأن تهنى لبسها % % فملابس التقوى أحق بها التقي % % PageV01P1343 البحر : - 1(@)(@@) % أهدي لبابك أوراقا ملفقة % من حظه منك إرفاد وإرفاق % % 2(@)(@@) % غرس لبابك سامح جهد قدرته % % إن لم يكن ثمر منه فأوراق % % PageV01P1344 البحر : - 1(@)(@@) % كانت لنظمي رقة % ضن الزمان بما استحقت % % 2(@)(@@) % فصرفتها عن فكرتي % % وقطعتها من حيث رقت % % PageV01P1345 البحر : - 1(@)(@@) % وكنت أظن العشق يترك مهجتي % % إذا زحم الشيب الشباب بمفرقي % % 2(@)(@@) % فلما بدا مع أسود الشعر أبيض % أتى العشق يغزوني على ألف أبلق % % PageV01P1346 البحر : - 1(@)(@@) % أقبلت يا ملك الشجاعة والندى % % والجيش محمر الأهاب شريق % % 2(@)(@@) % فكأنما الدنيا بجودك روضة % % وكأن جيشك للشقيق شقيق % % PageV01P1347 البحر : - 1(@)(@@) % فديت من الأتراك سرب جآذر % تعلم زهاد الورى كيف تعشق % % 2(@)(@@) % لهم منظر في الحسن يفتح خاطرا % ولكن سهم اللحظ في القلب يغلق % % PageV01P1348 البحر : - 1(@)(@@) % بروحي من أهوى العذيب لريقه % % وأعشق من أعطافه البان والنقا % % 2(@)(@@) % رمى لحظه قلبي وماس قوامه % % فلم أر من هذا ولا ذاك أوثقا % % PageV01P1349 البحر : - 1(@)(@@) % مليك التقى هنئت بالجامع الذي % % وجدت إلى مبناه 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms272# سعدا موافقا % % 2(@)(@@) % دعا حسنه أهل الصلاة لقصده % % فلا غرو إن جاء المصلي سابقا % % PageV01P1350 البحر : - 1(@)(@@) % لنا من وزير الشام بر يحثه % % مكارم شمس الدين حيث تليق % % 2(@)(@@) % وأقسم لا نشكو عدو زماننا % % وذا صاحب يدعى وذاك صديق % % PageV01P1351 البحر : - 1(@)(@@) % يا ويح من أصبح محت % % اجا لنوع الصدقه % % 2(@)(@@) % يثقل منه عند من % % يرجوه حتى الورقه % % PageV01P1352 البحر : - 1(@)(@@) % إن دام حالي واسهالي استحلت خرا % ما بين مندفع يجري ومندفق % % 2(@)(@@) % وما عجيب لشخص ذاب أكثره % % وإنما عجبي للبعض كيف بقي % % PageV01P1353 البحر : - 1(@)(@@) % يا قارعا باب هجراني ولا سبب % يحل من جهتي أسباب ميثاقي % % 2(@)(@@) % لتقرعن علي السن من ندم % اذا تذكرت يوما بعض أخلاقي % % PageV01P1354 البحر : - 1(@)(@@) % كفاني المؤيد عتب الزمان % % وأنقذني من إسار الشقا % % 2(@)(@@) % فكان ولائي له مخلصا % لأن الولاء لمن أعتقا % % PageV01P1355 البحر : - 1(@)(@@) % لا تسل عن حديث دمعي لما % % ظعن الركب واستقل الفريق % % 2(@)(@@) % لونته وأمطرته جفون % جر منها الوادي وسال العقيق % % PageV01P1356 البحر : - 1(@)(@@) % إذا كان أوفى سادتي وأبرهم % % ملاذي فلا زال الزمان موافقي % % 2(@)(@@) % ولا حال يوم الشعر عني هوى له % % ولا قطعت يوم الشعير علائقي % % PageV01P1357 البحر : - 1(@)(@@) % أفدي الذي أرسل نحوي طبقا % مع البدور حسنه في نسق % % 2(@)(@@) % يا طرق الشكر عليه قسما % لتركبن طبقا عن طبق % % PageV01P1358 البحر : - 1(@)(@@) % خلني بالطلا أمد حياتي % % يا عذولي وكن عليها صديق % % 2(@)(@@) % انما ماؤها هو الدم في العنقو % % د يجري من عرقه وعروقي % % PageV01P1359 البحر : - 1(@)(@@) % رب بكر في طريق جليت % % لي بالشام أمورا لم ترق % % 2(@)(@@) % هكذا كل جموح سائر % لم يدع عنه بنيات الطرق % % PageV01P1360 البحر : - 1(@)(@@) % يا حبذا خد الحبيب % % فقد أضاء شريقه % % 2(@)(@@) % إن لم يكن في الحسن نف % % س الروض فهو شقيقه % % PageV01P1361 البحر : - 1(@)(@@) % أمستنقذي باللطف من قبضة الردى % % لئن حثني فيك الرجا فلي الحق % % 2(@)(@@) % على يد مولانا نشا العمر ثانيا % فلا غرو أن ينشا على يده الرزق % % PageV01P1362 البحر : - 1(@)(@@) % يا رب أمرد قد سبرت غويره % % حتى أزال الشعر ذاك الرونقا % % 2(@)(@@) % وتنكرت صفة الغوير فلم يكن % % ذاك الغوير ولا النقا ذاك النقا % % PageV01P1363 البحر : - 1(@)(@@) % يا سيدي يا جمال الدين قد عرضت % % ضرورة ولك الموزون والصدقة % % 2(@)(@@) % إن أحوج الفقر حالي أن يحار به 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms273# % % فالعرض مني ومن احسانك النفقه % % PageV01P1364 البحر : - 1(@)(@@) % شكرا لها كنافة من بعدها % % قطائف جاء بقطر مغدق % % 2(@)(@@) % يا جود مهديها اذا قلنا انتهى % % ركبت فيها طبقا عن طبق % % PageV01P1365 البحر : - 1(@)(@@) % يفديك عبد كم دعاك مسطرا % رق المديح فحاز أوفر حقه % % 2(@)(@@) % ووعدته وعدا ستملكه به % % وتكون في الحالين مالك رقه % % PageV01P1366 البحر : - 1(@)(@@) % إلى حلب رمت السرى بعد بعدكم % % فعارضني أيضا زمان بعائق % % 2(@)(@@) % فياليتني للمرج دبقا لزمتكم % % وإن حلب فاتت فقل مرج دابق % % PageV01P1367 البحر : - 1(@)(@@) % يا شيخ أهل العلم والزهد في % % سادات أهل الرفق والرفقه % % 2(@)(@@) % لي خرقة ضاعت وأنت الذي % % نلبس من عرفانه الخرقه % % PageV01P1368 البحر : - 1(@)(@@) % سيدي إن يعق حجاب لقانا % % ما لطيقاننا القريبة عاقه % % 2(@)(@@) % عجبا للصدود منك ومني % % ولكل منا على الوصل طاقه % % PageV01P1369 البحر : - 1(@)(@@) % يامن أعاد وداد وا % % لده فجاء على وفاقي % % 2(@)(@@) % حاشاك تبطي يا جواد % % وأنت أسرع من براق % % PageV01P1370 البحر : - 1(@)(@@) % لك يا مليحة مقلة مع حاجب % للسهم عن قوس لقلبي يرشق % % 2(@)(@@) % و حبال شعر قد شقيت بحبها % % إن الشقي بكل حبل يخنق % % PageV01P1371 البحر : - 1(@)(@@) % يا ماجدا لا يزال من كرم % في بابه القاصدون تستبق % % 2(@)(@@) % هل لك في منة تغيث على % % جور عزيز قلبه حمق % % PageV01P1372 البحر : - 1(@)(@@) % قف بباب العلا وقل يا كتابي % % عن لساني قول الخويدم حقا % % 2(@)(@@) % أنا عبد مكاتب غير أني % % لست أخشى من مالك الرق عتقا % % PageV01P1373 البحر : - 1(@)(@@) % غار أخوك الغيث يا سيدي % % فصد عن رؤياك طرفا شقيق % % 2(@)(@@) % فها أنا اليوم لفرط الأسى % % والوحل لاأعرف أين الطريق % % PageV01P1374 البحر : - 1(@)(@@) % تقول لي الغيداء تحتاج رافقا % من الدمع والتبريح قلت لها رفقا % % 2(@)(@@) % شجوني لا ترقى كملسوع خاطيء % ودمعي كحظي ساقط وهو لا يرقا % % PageV01P1375 البحر : - 1(@)(@@) % ألا قل لقاضي قضاة الانام % % أمام التقى ذي الفخار العربق % % 2(@)(@@) % لقد حار عبدك يا سيدي % % وحق الجليل بحق الدقيق % % PageV01P1376 البحر : - 1(@)(@@) % لزهر الشقائق والبدر من % % جلا وجنتيك انتساب عريق % % 2(@)(@@) % فهذا أخوها بمعنى الشبيه % % وفي اللون هذا أخوها الشقيق % % PageV01P1377 البحر : - 1(@)(@@) % بأبي نقي الردف يصعب تارة % % ويعيده سعد يهون الملتقى % % 2(@)(@@) % ويحثني داعي الهوى فبحقه % % يا سعد عرج بي على وادي النقا % % PageV01P1378 البحر : - 1(@)(@@) % أفدي خليلا ما كان يجمع لي % % بين 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms274# الثمينين من خلائقه % % 2(@)(@@) % ان ضن بالوصل من لقاه فما % % يضن بالوصل من مهارته % % PageV01P1379 البحر : - 1(@)(@@) % كذا أبدا يا أجل الورى % % نوالك بين الورى يرتزق % % 2(@)(@@) % تقدم طرسا وتسدي ندى % فمنك الثمار ومنا الورق % % PageV01P1380 البحر : - 1(@)(@@) % أعتقت رقي من الخطوب فما % % أطيب فيك الثنا وما أعبق % % 2(@)(@@) % لك الولاء الجميل اخلصته % % يا معتقي والولاء لمن اعتق % % PageV01P1381 البحر : - 1(@)(@@) % طوق جود الوزير جيدي % % فلست عن مدحه أعوق % % 2(@)(@@) % أسجع بالمدح في علاه % % لا غرو أن يسجع المطوق % % PageV01P1382 البحر : - 1(@)(@@) % بدا وفي خاله توار % فيا لها طلعة شريقه % % 2(@)(@@) % جوهرة ما علمت الا % % دموع عيني لها عقيقه % % PageV01P1383 البحر : - 1(@)(@@) % لك الله قد خففت عني مؤونتي % % فما لي اذا عن راحة السر عائق % % 2(@)(@@) % وعمرت بيتي بالدقيق فلم أسل % % وكم لك في فعل الجميل دقائق % % PageV01P1384 البحر : - 1(@)(@@) % يا من للحيته دجى % قد رد نوم العاشق % % 2(@)(@@) % عجل بموسى قاطع % واقذف بها من حالق % % PageV01P1385 البحر : - 1(@)(@@) % لا آخذ الله غزال النقا % % أي عنا أبقى على العاشق % % 2(@)(@@) % ما بين حجل أو وشاح بدا % % وراح بالصامت والناطق % % PageV01P1386 البحر : - 1(@)(@@) % لا تنس يا مولاي قمحية % % لمعشر حاموا على أفقها % % 2(@)(@@) % كيلان لا يقنع من جودكم % % لو أنها كيلان في شرقها % % PageV01P1387 البحر : - 1(@)(@@) % شربت مدامة الندمان يوما % فلاموني على ترك الطريق % % 2(@)(@@) % ثكلتهم أما علموا بأني % % خليع أشتهي شرب العتيق % % PageV01P1388 البحر : - 1(@)(@@) % آه كم قد شقيت من جرب الجس % % م وكم ذا حالي به مفروق % % 2(@)(@@) % خلق الناس كلهم من تراب % وكأني من الحصى مخلوق % % PageV01P1389 البحر : - 1(@)(@@) % أجيراننا حيي دياركم الحيا % % وطاف عليها للغمائم ساقي % % 2(@)(@@) % فقد أنفذ التوديع حاصل أدمعي % % ولم يبق منه للمنازل باقي % % PageV01P1390 البحر : - 1(@)(@@) % على أنكم آنستموني بذكركم % % فقد كدت لا أشكو زمان فراق % % 2(@)(@@) % وإني لمجنون الفؤاد بحبكم % % فهلا ولو في الحين دمعي راقي % % PageV01P1391 البحر : - 1(@)(@@) % رب ليل ترى المجرة فيه % % ذات خط ينضي العيون دقيق % % 2(@)(@@) % حسبته الجوزا طريقا إلى الص % % بح فباتت وعينها للطريق % % PageV01P1392 البحر : - 1(@)(@@) % حدثتني يوم اللقا فتصا % % ممت ازديادا من لفظها المعشوق % % 2(@)(@@) % أدفع الهم بالحديث إذا عا % % د كما يدفع الورى بالعتيق % % PageV01P1393 البحر : - 1(@)(@@) % استنشدوني لطيف شعري % % و القلب بالجوع في حريق % % 2(@)(@@) % و قيل هل من 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms275# دقيق معنى % % فقال لهفي على الدقيق % % PageV01P1394 البحر : - 1(@)(@@) % طوقت جيدي بالعطاء ومدحتي % % فأنا المطوق ساجع لك في الورق % % 2(@)(@@) % من فعلك اشتق المقال فمن يقل % % هذا تصدق قيل إذ هذا صدق % % PageV01P1395 البحر : - 1(@)(@@) % يئست من الصداقة منك لما % % تمادى منك إعراض وثيق % % 2(@)(@@) % و من عجب الزمان إذا اعتبرنا % % خليل ما يجي منه صديق % % PageV01P1396 البحر : - 1(@)(@@) % كيف الهناء بعيد النحر عندكم % % يا سادة ملكوا الدنيا بتحقيق % % 2(@)(@@) % و كل أيامكم مما تريق دما % في البأس أو في الندى أيام تشريق % % PageV01P1397 البحر : - 1(@)(@@) % يا رب كلب في راحتي حجر % % يذوده والحمام ينطلق % % 2(@)(@@) % أمسكت عن رميه وأعجبني % % تعذيبه بالنباح والقلق % % PageV01P1398 البحر : - 1(@)(@@) % تسلى فؤادي بعد الهوى % % و نامت جفوني بعد الأرق % % 2(@)(@@) % وردتم شجوني إلى أن عفت % % كما أنضج الشيء حتى احترق % % PageV01P1399 البحر : - 1(@)(@@) % يا أرزق العين والتعدي % % أجرمت في العاشقين حقا % % 2(@)(@@) % طليبك الله يوم يدعو % % و تحشر المجرمين زرقا % % PageV01P1400 البحر : - 1(@)(@@) % لك مقلة إنسانها % % يجني علي وأعشق % % 2(@)(@@) % فاعجب لمن أحببته % % و هو العدو الأزرق % % PageV01P1401 البحر : - 1(@)(@@) % تصرمت الأيام دون وصالك % % فمن شافعي في الحب يا ابنة مالك % % 2(@)(@@) % فكان الكرى يدني خيالك وانقضى % % فلا منك تنويل ولا من خيالك % % 3(@)(@@) % رويدك قد أوثقت بالهم مهجتي % % عليك فماذا يبتغى بملالك % % 4(@)(@@) % أفي كل يوم لي اليك مطالب % عليك ولكنها محفوفة بمهالك % % 5(@)(@@) % وغيران قد مد الحجاب من الظبا % % وقد كان يكفيه حجاب دلالك % % 6(@)(@@) % فتنت بخال فوق خدك صانه % % أبوك فويلي من أبيك وخالك % % 7(@)(@@) % وعاينت منك الشمس بعدا وبهجة % فيا عجبا من واثق بحبالك % % 8(@)(@@) % هجرت وما فاز المحب بزورة % فديتك زوري واهجري بعد ذلك % % 9(@)(@@) % لك الله قلبا كلما جر طرفه % % إلى الحسن القى عروة المتماسك % % 10(@)(@@) % تأبط شرا من أذى الوجد وانثنى % % كثير الهوى شتى النوى والمسالك % % PageV01P1402 11(@)(@@) % قفي تنظريه في لظى البيد تابعا % سرام وإلا في رماد ديارك % % 12(@)(@@) % سقى الله أكناف الديار هوامعا % تبيت بها الأزهار غر المضاحك % % 13(@)(@@) % كأن ندى الملك المؤيد جادها % % فاسفر نوار الربى عن سبائك % % 14(@)(@@) % مليك إلى مغناه تستبق المنى % % مسابقة الحجاج نحو المناسك % % 15(@)(@@) % له شيم تحصي المدائح وصفها % % إذا أحصيت زهر النجوم الشوابك % % 16(@)(@@) % وفي الأرض أخبار 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms276# له ومآثر % تسير سرى الأسماء بين الملائك % % 17(@)(@@) % حمى الأرض من آرائه وسيوفه % % بكل مضيء في دجى الخطب فاتك % % 18(@)(@@) % وسكنها حتى لو اختار لم تمس % % غصون النقا تحت الرياح السواهك % % 19(@)(@@) % ولما جلا الملك المؤيد رأيه % % جلا ظله الممدود وهج الممالك % % 20(@)(@@) % مهيب السطا هامي العطا سابق العلى % % جلي الحلا كشاف ليل المعارك % % PageV01P1403 21(@)(@@) % تولى فيا عجز الاكاسرة الأولى % % وجاد فقلنا يا حياء البرامك % % 22(@)(@@) % وشاركه العافون في ذات ماله % % وليس له في مجده من مشارك % % 23(@)(@@) % كريم يجيل الرأي فعلا ومنطقا % فلا يرتضي غير الدراري السوامك % % 24(@)(@@) % كعوب القنا عجبا براحته التي % % يروي نداها مشرعات طوالك % % 25(@)(@@) % اذا هز منها الملك كعبا مثقفا % فيا لك من كعب عليه مبارك % % 26(@)(@@) % وان جر في صوب الثغور رؤسها % % جلت قلح الأعداء اجلاء المساوك % % 27(@)(@@) % ولله من أقلام علم بكفه % % سوالب ألباب الرجال سوالك % % 28(@)(@@) % كأن معانيها كواعب تنجلي % % على حبك الإدراج فوق آرائك % % 29(@)(@@) % كأن بياض الطرس بين سطورها % % أياديه في طي السنين الحوالك % % 30(@)(@@) % أمسدي الأيادي البيض دعوة ظافر % لديك على رغم الزمان المماحك % % PageV01P1404 31(@)(@@) % عطفت على حالي بنظرة سائر % % وقد مد فيها الدهر راحة هاتك % % 32(@)(@@) % فدونك من مدحي اجتهاد مقصر % % تداركت من أحواله شلوها لك % % 33(@)(@@) % تملكه الهم المبرح برهة % إلى أن محى رضوان صولة مالك % % PageV01P1405 البحر : - 1(@)(@@) % لثمت ثغر عذولي حين سماك % % فلذ حتى كأني لاثم فاك % % 2(@)(@@) % حبا لذكراك في سمعي وفي خلدي % % هذا وان جرحت في القلب ذكراك % % 3(@)(@@) % تيهي وصدي اذا ماشئت واحتكي % % على النفوس فإن الحسن ولاك % % 4(@)(@@) % وطولي من عذابي في هواك عسى % % يطول في الحشر ايقافي وإياك % % 5(@)(@@) % في فيك خمر وفي عطف الصبا ميد % % فما تثنيك إلا من ثناياك % % 6(@)(@@) % وما بكيت لكوني فيك ذا تلف % إلا لكون سعير القلب مأواك % % 7(@)(@@) % بالرغم ان لم أقل يا أصل حرقته % % ليهنك اليوم إن القلب مرعاك % % 8(@)(@@) % يا أدمعا لي قد أنفقتها سرفا % ما كان عن ذا الوفا والبر أغناك % % 9(@)(@@) % ويا مديرة صدغيها لقبلتها % % لقد غدت أوجه العشاق ترضاك % % 10(@)(@@) % مهما سلونا فلا نسلو ليالينا % % وما نسينا فلا والله ننساك % % PageV01P1406 11(@)(@@) % نكاد نلقتاك بالذكرى إذا خطرت % % كأنما اسمك 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms277# يا سعدي مسماك % % 12(@)(@@) % وتشتكي الطير نعابا بفرقتنا % % وما طيور النوى إلا مطاياك % % 13(@)(@@) % لقد عرفناك أياما وداومنا % % شجو فيا ليت أنا ما عرفناك % % 14(@)(@@) % نرعى عهودك في حل ومرتحل % رعي ابن أيوب حال اللائد الشاكي % % 15(@)(@@) % العالم الملك السيار سؤدده % % في الأرض سير الدراري بين أفلاك % % 16(@)(@@) % ذاك الذي قالت العليا لأنعمه % % لا أصغر الله في الأحوال ممساك % % 17(@)(@@) % له أحاديث تغني كل مجدية % عن الحياء وتجلي كل أحلاك % % 18(@)(@@) % ما بين خيط الدجى والفجر واضحة % كأنها درر من بين أسلاك % % 19(@)(@@) % كافاك يا دولة الملك المؤيد عن % % بر البرية من للفضل أعطاك % % 20(@)(@@) % لك الفتوة والفتوى محررة % % لله ماذا على الحالين أفتاك % % PageV01P1407 21(@)(@@) % أحييت مامات من علم ومن كرم % فزادك الله من فضل وحياك % % 22(@)(@@) % من ذا يجمع ما جمعت من شرف % في الخافقين ومن يسعى كمسعاك % % 23(@)(@@) % أنسى المؤيد أخبار الأولى سلفوا % % في الملك ما بين وهاب وفتاك % % 24(@)(@@) % ذي الرأي يشكي السلاح الجم حدته % % لذاك يسمى السلاح الجم بالشاكي % % 25(@)(@@) % والمكرمات التي افترت مباسمها % % والغيث بالرعد يبدي شهقة الباكي % % 26(@)(@@) % قل للبدور استجني في الغمام فقد % % محا سنا ابن علي حسن مرآك % % 27(@)(@@) % إن ادعيت من البشر المصيف به % % غيظا فقد ثبتت في الوجه دعواك % % 28(@)(@@) % يا أيها الملك المدلول قاصده % % وضده نحو ستار وهتاك % % 29(@)(@@) % لو أدركتك بنوا العباس لانتصرت % % بمقدم في ظلامك الخطب ضحاك % % 30(@)(@@) % مظفر الجد من حظ ومن نسب % مبصر بخفي الرشد مدراك % % PageV01P1408 31(@)(@@) % وحدته في الورى بالقصد وارتفعت % % وسائلي فيه عن زيغ وإشراك % % 32(@)(@@) % ما عارضت يد امداحي مواهبه % % إلا رجعت بصفو المغنم الزاكي % % 33(@)(@@) % إن الكرام اذا حاولت صيدهم % كانت بيوت المعالي مثل إشراك % % 34(@)(@@) % سقيا لدنياك لا كف بخائبة % فيها لديك ولا وصف بأفاك % % 35(@)(@@) % من كان في خيفة الانفاق يمسكها % % فانت تنفقها من خوف إمساك % % PageV01P1409 البحر : - 1(@)(@@) % طيف تصيدته والليل محتبك % % من حلية الشهب أو من شعره الحبك % % 2(@)(@@) % بين الذوائب تمشي في حبائلها % % يا حبذا الظبي أو يا حبذا الشرك % % 3(@)(@@) % عجبت من لائم هنكي على قمر % الشمس منه على الحيطان تنهتك % % 4(@)(@@) % محجب لا يراه العاذلون ولا % % أصغى اليهم وإن بروا وإن أفكوا % % 5(@)(@@) % فليتهم 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms278# نظروه واستمعت لهم % % وخلصوني من جفنيه واشتبكوا % % 6(@)(@@) % أبكي وعاذلي التعبان يطلبني % % أسلو فيأخذني من عقله الضحك % % 7(@)(@@) % و كيف أسلو هوى بدر رضيت بأن % % أشقى به وهو في اللذات منهمك % % 8(@)(@@) % لو يعلم الترك أهلوه بأني قد % % شبهته البدر ما أبقوا ولا تركوا % % 9(@)(@@) % أمير حسن كما قلنا أمير تقى % % في الشام وهو على شهيائه ملك % % 10(@)(@@) % سيف الملوك وكافيهم اذا منحوا % % يوم العطاء ويوم البؤس إن فتكوا % % PageV01P1410 11(@)(@@) % نحيي بلقياه أن نفني بفرقته % % كأنما نحن يا بحر الندى سمك % % 12(@)(@@) % قالوا امتدحه فقلت العي معذرة % % قالوا فخذ من حلاه الدر ينسلك % % 13(@)(@@) % أمداحه من عطاه أو فضائله % % كأن أمداحه من تبره سبكوا % % 14(@)(@@) % ذو الجود والبأس كم يحيى ببينة % من حي أو يهلك الأعدا بما هلكوا % % 15(@)(@@) % يظن من طار خوفا من مهابته % % أن النجوم عليه في الدجى شبك % % 16(@)(@@) % و في النهار يري خيلا يضاعفها % % كأن ظل المذاكي خلفها رمك % % 17(@)(@@) % فالشام كالحرم المأمون طائره % % فيه الأماني وفيه البر والنسك % % 18(@)(@@) % نعم وفي حلب فاضت مراضعها % % جدوى خوارزم كالأنواء تعترك % % 19(@)(@@) % و الغيث يهمل لامحل ولا سغب % والأمن يشمل لا خوف ولا درك % % 20(@)(@@) % إن جاد فالمزن في العافين منسفح % أو جال فالدم في العادين منسفك % % PageV01P1411 21(@)(@@) % و دولة الناصر السلطان زاهرة % وللسعود على أمصارها برك % % 22(@)(@@) % كانت عدى الملك كالثعبان فاصطلحوا % % وبعضهم كان كالبرغوث فانفركوا % % 23(@)(@@) % إذا تفرزن في الطاغين بندقهم % % فرأسه بتراب الحتف ينمعك % % 24(@)(@@) % كسرى من الدولة الشهباء منكسر % % قدما وقيصر بالتقصير مرتبك % % 25(@)(@@) % فالأمن يعمر منها فوق ما تعبوا % % والرعب يردع عنها فوق ما فتكوا % % 26(@)(@@) % و أنت نجل ذوي ملك لخدمته % % قد قدموا منه في الأرواح ما ملكوا % % 27(@)(@@) % أنت البداوة في الترك الأولى نشأوا % % مع الضراغم في الأغيال تشترك % % 28(@)(@@) % خيولهم في الوغى للبيض راكضة % % وفي جفان القرى كالبدن تبترك % % 29(@)(@@) % محمرة في العطا آلاف ما وهبوا % % كأنهم لدم الأكياس قد سفكوا % % 30(@)(@@) % يامن بحبل ولاه أو مواهبة % % ومن بمسك ثناه فاز ممتسك % % PageV01P1412 31(@)(@@) % جبرا لها مدحة لولاك ما انسلكت % % نظما به سار قوم أيه سلكوا % % 32(@)(@@) % كم مثلها قلت في روض الشباب وكم % % قد قال غيري فبان 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms279# الزهر والحسك % % 33(@)(@@) % قصرت نظمي الا أنه نخب % وطول الناس الا أنهم لبكوا % % 34(@)(@@) % و ما تقضت لبانات لطائفة % % قالت حلاوة ألفاظي لقد علكوا % % 35(@)(@@) % فليعذر الآن مغلوب بعائلة % ليس السكوت بمجديهم ولا الحرك % % 36(@)(@@) % تدور في أحرف الألفاظ هامته % % وما يدور على حرف لهم حنك % % 37(@)(@@) % أموت حزنا إذا عانيت حالهم % % وما بي الموت إلا هذه الترك % % 38(@)(@@) % خلصت رزقهم من كيد كائدهم % % وغبت عنهم فلا والله ما تركوا % % 39(@)(@@) % و لي خصوم ولست الآن شاكيهم % % لكنهم في غد يدرون أين شكوا % % 40(@)(@@) % لا زال حظك من دنيا وآخرة % % ميسرا وحظوظ الناس تعترك % % PageV01P1413 41(@)(@@) % يجري بسؤددك الوضاح كل ثنا % كأنما هو نجم والثنا فلك % % PageV01P1414 البحر : - 1(@)(@@) % أمنزل سعدي بالعذيب سقاكما % % ملث الحيا حتى يبل صداكما % % 2(@)(@@) % صدى كلما أدعو أجاب كأننا % % خلقنا على أطلالها نتشاكى % % 3(@)(@@) % وربع محا ركض الجنائب رسمه % % وجوم غوادي المرزمين دراكا % % 4(@)(@@) % وقفت أناي الصبر في جنباته % % ألا أين مغناها وأين غناكما % % 5(@)(@@) % كأني بكثر الهم أختم في الثرى % % رهينة قلب لا يحش فكاكا % % 6(@)(@@) % يعز على المشتاق يا طلل النقا % % بلاه على حكم النوى وبلاكا % % 7(@)(@@) % وما عن رضى خف القطين ثنية % % فأثبت في جسمي الضنا ومحاكا % % 8(@)(@@) % و طيف سرى للشام من أرض بابل % % لأبعدت يا طيف الحبيب مداكا % % 9(@)(@@) % و ذكرتني العهد القديم على الحمى % % رعى الله أيام الحمى ورعاكا % % 10(@)(@@) % فديتك طيفا لا يذكر ناسيا % ولكن يزيد المستهام هلاكا % % PageV01P1415 11(@)(@@) % تصيدته والأفق مقتبل الدجى % % تخال النجوم الزهر فيه شباكا % % 12(@)(@@) % إلى أن تيقظنا على أرج كما % % بذكر شهاب الدين يفتح فاكا % % 13(@)(@@) % إمام إذا هز اليراع مفاخرا % به الدهر قال الدهر لست هناكا % % 14(@)(@@) % و قالت له العليا فداك ذوو العلى % % وإن قل شيء أن يكون فداكا % % 15(@)(@@) % و قال زماني ما تضر إساءتي % % إذا استغفرت لي في الآثام يداكا % % 16(@)(@@) % لك الله ما أزكى وأشرف همة % % وأنجح في كسب العلوم سراكا % % 17(@)(@@) % علوت فأدركت النجوم فصغتها % % كلاما ففقت القائلين بذاكا % % 18(@)(@@) % و حزنت معاني القول من كل وجهة % % فأبق علينا نبذة لثناكا % % 19(@)(@@) % و حكت رقيق اللفظ منفردا به % % وقد قيل إن الروض حاك فحاكى % % 20(@)(@@) % و جاوزت صوب 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms280# الغيث في حلبة الندى % % فعبس لما جزته وتباكى % % PageV01P1416 21(@)(@@) % و لو لم تكن للجود في الناس آية % % لما كان منهل الغمام تلاكا % % 22(@)(@@) % متى تتميز مادحوك ولم تقل % % من الوصف الا ماتقول عداكا % % 23(@)(@@) % تجاورت أشتات المساعي إلى العلى % % وزدت فاعيى الواصفين سناكا % % 24(@)(@@) % و حقك ما فوق البسيطة لاحق % فقصر رعاك الله بعض خطاكا % % 25(@)(@@) % مدحتك لا أبغي ثراء بذلته % % الي ولكن رفعة بثراكا % % 26(@)(@@) % بعيشك الا ما تأملت صفو ما % % منحتك من ودي بعين رضاكا % % 27(@)(@@) % فأقسم ما ضمت كحبك أضلعي % % ولا استنشقت روحي كنشر هواكا % % 28(@)(@@) % أكاد أطيق السيل أدفع صدره % % ولا أدعي أني أطيق جفاكا % % 29(@)(@@) % و من ذا الذي يدري حلا ما أقوله % % سواك ومن يدري سواي حلاكا % % 30(@)(@@) % تخذتك انسا حين أوحشني الورى % % وقلت لرآءي المستقيم هناكا % % PageV01P1417 31(@)(@@) % يجدد لي ذكرى كمالك نقصهم % % كأني من كل الأنام أراكا % % 32(@)(@@) % فلا وحماك الرحم لابت مهديا % حقائق أمداحي لغير حماكا % % 33(@)(@@) % بلى ربما آنست في الفكرة فترة % % فجربت فكري فد مديح سواكا % % PageV01P1418 البحر : - 1(@)(@@) % خليلي من مصر قفا نبك في السبك % % على عيشنا بالنيل في فلك الفلك % % 2(@)(@@) % على مصر والهفي على مصر لهفة % % يصح بها قلبي المشوق على السبك % % 3(@)(@@) % ويا طربي فيها إلى سود أعين % على مثلها في كل داجية أبكي % % 4(@)(@@) % أعاذلتي ما أنت مني في الهوى % % ولا أنا في أنساب هذا الهوى منك % % 5(@)(@@) % تشك سهام اللحظ قلبي بالأسى % % وقلبك خال من سهام بلا شك % % 6(@)(@@) % بكم آل فضل الله طافت مقاصدي % % وتم على نجح الرجا بكم نسكي % % 7(@)(@@) % رفضت الورى لما علقت حبالكم % % ونزهت دين الحب فيكم عن الشرك % % 8(@)(@@) % وستر فؤادي أن أقلام بدركم % % سرور لذي ود وغيظ لذي محك % % 9(@)(@@) % لأقلام مولانا ثنا متضوع % فهل هي في الكافور تكتب بالمسك % % 10(@)(@@) % و ماهي إلا القضب اما موائسا % واما مواضي الحد تحمي حمى الملك % % PageV01P1419 11(@)(@@) % اذا مادعاها الرأي يا عزة الهدى % % بذا فدعاها السطو ياذلة الشرك % % 12(@)(@@) % اذا أتبعت ألفاظها بصريرها % % طربنا لاقوال البلاغة في هنك % % 13(@)(@@) % اذا ما اليد البيضاء ألقت عضالها % % تلقف صنع الحق صنع ذوي الافك % % 14(@)(@@) % و ان لم تكن موسى فان محمدا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms281# % كثيرالأيادي البيض في الظلم الحلك % % 15(@)(@@) % نعم إنها في كفه قصب العلى % % بسفن وتحملن العلى ضخمة السمك % % 16(@)(@@) % دقاق تحملن الجليل وتشتكي % % اليها فلا تشكو ولكنها تشكي % % 17(@)(@@) % تربت بآكام الاسود ترابها % % مواقع سحب ما نداها بمنفك % % 18(@)(@@) % فجاءت تحاكي الاسد والسحب سطوة % % وجودا وللحاكي فحار على المحكي % % 19(@)(@@) % مسخرة تجري بما ينفع الورى % % على يده فانظر إلى البحر والفلك % % 20(@)(@@) % مؤمرة تسري إلى حومة الوغى % % ومن أسود في أبيض علم الرنك % % PageV01P1420 21(@)(@@) % مسددة الأفعال والبأس والندى % % مثقفة الآراء في الأخذ والترك % % 22(@)(@@) % فأحسن بها في الطرس هيفا كحيلة % % تريك قدود العرب مع ثقل الترك % % 23(@)(@@) % و أعجب لها كالنبل تنكي وتارة % % تحصن من وقع النبال التي تنكي % % 24(@)(@@) % و بالظل منها وهو ظل يراعة % % تمر على الدنيا ستورا من الهتك % % 25(@)(@@) % هي الألفات المائلات بكفه % % على أنها اللامات في المعرك الضنك % % 26(@)(@@) % قصار تحاماها الرماح طويلة % % نواحل يستشفى بها الحال من وعك % % 27(@)(@@) % و أقسم ما الشهب المنيرة في السما % % اذا كتبت يمناه أرفع من تلك % % 28(@)(@@) % يدك الحيا دورا وفي سحبها حيا % ينجي ديار المقترين من الدك % % 29(@)(@@) % و يعلو على تبر السبائك حظها % % فان شئت حاكي بالسبائك أو احكي % % 30(@)(@@) % و كم قلم مامر تلو دواته % % وهن لتدبير الممالك في دنك % % PageV01P1421 31(@)(@@) % أمامك يا ممتازها ومشيرها % % طريقان شتى من نجاة ومن هلك % % 32(@)(@@) % تلاعب بالابطال ان قصدوا الفنا % % كأن الوغى منها يلاعب بالدك % % 33(@)(@@) % فلا برحت بدرية النصر والعلى % % مؤملة النعماء مرهوبة الفتك % % 34(@)(@@) % لها أسطر مثل السيوف لدى الوغى % % وترميلها في صحفها من دم السفك % % 35(@)(@@) % و لو نوزعت في فخرها قال ربها % % نعم في يدي هذا الفخار وفي ملكي % % 36(@)(@@) % و لو أن سيفا فاتحا فك غمده % % يصور عليها عاجل الفك بالفك % 37(@)(@@) % عوارفها كالمزن دائمة البكا % % وأدراجها كالزهر دائمة الضحك % % 38(@)(@@) % أنظم در الوصف من نظمها لها % % وليس لألفاظي سوى رقة السلك % % PageV01P1422 البحر : - 1(@)(@@) % يا بارقا من نحو بشر باسمه % % أذكرتني عهد الهوى المتروكا % % 2(@)(@@) % وحكيت ايماض الثغور فلا تسل % % عن خافق من أضلع تحكيكا % % 3(@)(@@) % خذ من دموع العين جارية فقد % % خلفت قلبي للأسى مملوكا % % 4(@)(@@) % وعهدته للحب بيتا سالما % فعلام 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms282# يتركه الأسى منهوكا % % 5(@)(@@) % إيها فقد شفي ابن خضر فلم يدع % % قلبا ولا جدا لنا موعوكا % % 6(@)(@@) % تاج العلى والعلم والكرم الذي % % أضحى له تبر الثنا مسبوكا % % 7(@)(@@) % والواضح الفضل الذي لم يلق في % % علياه لا لبسا ولا تشكيكا % % 8(@)(@@) % والطاهر النسب العريق فحبذا % % أصل وفرع في العلى يرضيكا % % 9(@)(@@) % أبناء بيت ما رأت عين الثنا % % شيئا لهم في الفضل لا وأبيكا % % 10(@)(@@) % يا ابن العلى أحيا مقام علائهم % % متوحدا لا يقبل التشريكا % % PageV01P1423 11(@)(@@) % يا من بكفي جاهه ونواله % أحبا وأحيا الخامل الصعلوكا % % 12(@)(@@) % الله بالبر المعجل والشفا % % ستر الزمان وحالنا المهتوكا % % 13(@)(@@) % لا زال مثلي كل شاكر نعمة % يدعو بطول بقاك أو يدعوكا % % 14(@)(@@) % لك في الأولى حظ وفي طرق العلى % % قدم وكف يحسنان سلوكا % % PageV01P1424 البحر : - 1(@)(@@) % يا طالب الجود لا تتعب أمانيكا % % فقد تغيب نجم كان يهديكا % % 2(@)(@@) % ويا فتى القصد يروي عن غمام يد % فلك الذي كان ترويه ويرويكا % % 3(@)(@@) % إنا إلى الله من دهياء قد جعلت % % معنى التصبر بين الناس متروكا % % 4(@)(@@) % و حسرة ثنت الأجفان جارية % % والقلب تحت أسار الحزن مملوكا % % 5(@)(@@) % آها لفقدك نجم الدين من رجل % لو أن آها تروي غلتي فيكا % % 6(@)(@@) % أرعى النجوم لعلي أن أراك بها % % لا بالثراء وقبل أن أراعيكا % % 7(@)(@@) % و أسكب الدمع محمرا كأني قد % % أجريت ذائب ما أعطيت مسبوكا % % 8(@)(@@) % من لي بنفس يكون الخطب قابلها % % فكنت أفدي حمى العليا وأفديكا % % 9(@)(@@) % مالي اناديك والنعماء صامتة % % وما عهدتك تلقى من يناديكا % % 10(@)(@@) % هذا الغياب الذي قد كنت أحسبه % % حتى أكاد قبيل الفقد أبكيكا % % PageV01P1425 11(@)(@@) % لهفي عليك لفضل ماتركت به % % في القول فضلا ولا في الخلق صعلوكا % % 12(@)(@@) % لهفي عليك لبيت قد تحيفه % % عروض دهر فأضحى البيت منهوكا % % 13(@)(@@) % لهفي عليك لأحكام مسددة % % تدني إلى الغرض الاقصى مراميكا % % 14(@)(@@) % لهفي عليك لآداب مهذبة % % لحظا يراعيك أو لفظا يناجيكا % % 15(@)(@@) % إن يفقد المستفيد العلم من كلم % % ملكا فقد فقد الصوفي تسليكا % % 16(@)(@@) % من للفضائل تحلوها لهاك لنا % % وللفواصل تجلوها مساعيكا % % 17(@)(@@) % من للقصائد يستوفي موازنها % % فيض الندى وهو من جدوى معانيكا % % 18(@)(@@) % من للمعاني التي صيرت غايتها % % للأسر عتقا وللأحرار تمليكا % % 19(@)(@@) % فمن يجاريك يعرف قدر ما 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms283# فقدت % % منك الأنام وقل لي من يجاريكا % % 20(@)(@@) % قالوا السراة كثير حين تخبرهم % % الآن يبصر من يسري مساريكا % % PageV01P1426 21(@)(@@) % ماكان ضر المنايا في تقبلها % % لو تستبيح بني الدنيا وتخطيكا % % 22(@)(@@) % يا غائبا ولهى كفيه حاضرة % % مهما سلوت فلا والله أسلوكا % % 23(@)(@@) % اني لأذكر للاحسان مر يد % فكيف أنسى وقد حلت أياديكا % % 24(@)(@@) % واخجلتا لمقام قد حضرت به % % وما سقاني بكاس الموت ساقيكا % % 25(@)(@@) % و في لك الجود لما صح ذينكما % % نعم ومالخل إلا من يوافيكا % % 26(@)(@@) % و أصبحت قضب الاسلام ناكسة % % شعثا محاسنها تحكي مساويكا % % 27(@)(@@) % كانت عوالي يستكفي الزمان بها % % ثم انقضت فروينا عن عواليكا % % 28(@)(@@) % ما كنت إلا غماما زال عن أفق % % من بعد ما كفت الدنيا غواديكا % % 29(@)(@@) % وطود حلم هوى من بعد ما زحمت % % وكر السما ونسريها معاليكا % % 30(@)(@@) % تلقى أعاديك بالإحسان مبتسما % حتى يكاد ولي أن يعاديكا % % PageV01P1427 31(@)(@@) % وتحمل الأمر قد أنضت فوادحه % % صم الجبال ولكن ليس ينضيكا % % 32(@)(@@) % لو شك طرف امريء في الشمس طالعة % % لم يبق في فضلك الوضاح تشكيكا % % 33(@)(@@) % ولو حمى المرء من موت صنائعه % % لأقبلت من فجاج الأرض تحميكا % % 34(@)(@@) % هذي وفودك قد أمت ثراك كما % % أمت بعين الندى قدما معانيكا % % 35(@)(@@) % قاموا يعزون فيك اليوم أنفسهم % % وقمت في الجود والعليا أعزيكا % % 36(@)(@@) % أمر بالربع والأجفان تنشده % % بليت ياربع حتى كدت أبكيكا % % 37(@)(@@) % كأن بابك لم تحفل مواكبه % % وبرق بشرك لم يحلب عزاليكا % % 38(@)(@@) % بعدا ليومك ما أبكى نواك وما % % أحلى لمطلب النعمى مجانيكا % % 39(@)(@@) % حست دمشق وفاضت نفسها أسفا % % أما ترى محلها بالمحل مسفوكا % % 40(@)(@@) % كانت أياديك من بين البلاد بها % % سترا فأصبح ذاك الستر مهتوكا % % PageV01P1428 41(@)(@@) % اذا شدا الطير شق الزهر من أسف % ثيابه فكأن الطير يرثيكا % % 42(@)(@@) % لا تبعدن فلا لاقيت مغربة % ولا سلكت طريقا ليس مسلوكا % % 43(@)(@@) % ولا انثنيت قصي الدار محتجنا % إلا وشخص بنيك الطهر يدنيكا % % 44(@)(@@) % جادت ضريحك أخلاف الغمام ولا % % زالت تجر ذيولا فوق ناديكا % % 45(@)(@@) % ما أنت ميت وهذا الذكر منتشر % وانما نحن موتى من تناسيكا % % PageV01P1429 البحر : - 1(@)(@@) % قالوا أمير فقال العدل بل ملك % % قالت مخافته لله بل ملك % % 2(@)(@@) % نعم علي العلي دنيا وآخرة % % والعقل يشهد والآثار والفلك % % 3(@)(@@) % لو 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms284# تسأل البدر أنباعن سناه بلا % % تكلف وتجلى باسمه الحلك % % 4(@)(@@) % فليهن شام له من دأبه حلب % حماه بأسا فلا بأس ولا درك % % 5(@)(@@) % كم آمن فيه أمن الطير في حرم % وكان مثل قطاة غرها شرك % % 6(@)(@@) % لا تذكرن بحارا عند أنعمه % % إن البحار لدى نعمائه برك % % 7(@)(@@) % واسمع مدائح كالاسلاك من درر % غنى بها ما دحوه أية سلكوا % % PageV01P1430 البحر : - 1(@)(@@) % نقلوا انني سلوت هواك % % آه من نقل آثم أفاك % % 2(@)(@@) % حاش لله لو سليت على النا % % ر فؤادي ما كنت ممن سلاك % % 3(@)(@@) % سائلي سائل الدموع بخدي % % عن جوى القلب وانظري مغناك % % 4(@)(@@) % ولقد لام في ضنا الجسنم لاه % ما قضى ما قضيته في حماك % % 5(@)(@@) % لائمي ان في الضنا لي عذرا % كلما اشتقت أهل وادي الأراك % % 6(@)(@@) % فسقى الغيث بالأراك حبيبا % صار جسمي عليه كالمسواك % % 7(@)(@@) % ومليكا قد مات بعد مليك % بحماه يا حر قلبي لذاك % % PageV01P1431 البحر : - 1(@)(@@) % تصول بأسياف الجفون وتسفك % % فيا لدم من جفن عيني يسفك % % 2(@)(@@) % حلت لي منها نسبة قاهرية % % على أن قلبي في هواها مشبك % % 3(@)(@@) % ان استبعدت قلبي فنظمي على الورى % % بمدح الامام المالكي مملك % % 4(@)(@@) % أقاضي القضاة العلم فردا وسوددا % ايا فرد ودي انه فيك يشرك % % 5(@)(@@) % ملكت ولائي بالندى وشرطت لي % % فكان الندى بالجاه والشرط أملك % % 6(@)(@@) % فهنئت بالأعياد سالكة الهنا % % إليك بمنظوم الثناء يسلك % % 7(@)(@@) % ولا برح العافي بذلك أو شذا % % مديحك ما بين الورى يتمسك % % PageV01P1432 البحر : - 1(@)(@@) % اذا وصف الانسان بالبر والتقى % % يقولون هذا من عديد الملائكة % % 2(@)(@@) % وأقسم يا جبريل ما لك في الورى % % مثيل فأيد يا إلهي مسالكه % % 3(@)(@@) % وبالناصر السلطان زده مكانة % وعمر به أملاكه وممالكه % % 4(@)(@@) % وعجل لراجي بابه كل ساعة % % مطالبه أو للشقي مهالكه % % PageV01P1433 البحر : - 1(@)(@@) % هنئت يا أكرم العباد به % % عاما سعيدا على معاليكا % % 2(@)(@@) % يخدم علياك بالهلال أما % % تراه كيف انحنى يحبيكا % % 3(@)(@@) % كأنه منجل حباك به % % يحصد أعمار من يعاديكا % % PageV01P1434 البحر : - 1(@)(@@) % ومولع بفخاخ % % يمدها وشباك % % 2(@)(@@) % قالت لي العين ماذا % % يصيد قلت كراك % % PageV01P1435 البحر : - 1(@)(@@) % لي صديق سيد سند % بيننا الآداب مشتركه % % 2(@)(@@) % كلما قابلت طلعته % % قيل لي سعدها بركه % % PageV01P1436 البحر : - 1(@)(@@) % كان لي عبد يسمى فرجا % % نصب الغير عليه 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms285# الشبكا % % 2(@)(@@) % وأنا اليوم كما تبصرني % % ليس عندي فرج الا البكا % % PageV01P1437 البحر : - 1(@)(@@) % قالت خزائن علم ان شكا ألما % وزيرنا فلنعم الأخوة الشركه % % 2(@)(@@) % هذا أخوه اذي بالسعد أنعته % % الله يبقي لنا في عمره البركه % % PageV01P1438 البحر : - 1(@)(@@) % حبذا للدين والدنيا فتى % حيثما كان سعيد الحركه % % 2(@)(@@) % كل أفق سار فيه ذكره % % يا له سعد ثنته بركه % % PageV01P1439 البحر : - 1(@)(@@) % أنا في خير ومير بحمى % % صاحب سلك قصدي مسلكه % % 2(@)(@@) % أصل ذا سعد من الله أتى % % ولعمري كل هذا بركه % % PageV01P1440 البحر : - 1(@)(@@) % يا معتق المذنبين مما % % خافوا من النار والمهالك % % 2(@)(@@) % أعتق من المهلكات رقي % % ولا تحكم علي مالك % % PageV01P1441 البحر : - 1(@)(@@) % مولاي رفقا بقلب % صدعته بجفائك % % 2(@)(@@) % لا تكسرن إناء % ملآنة بولائك % % PageV01P1442 البحر : - 1(@)(@@) % عش يا محمد سالما بيت العلى % % إذ كل بيت في الورى منهوك % % 2(@)(@@) % وفدى لك المملوك بالأمس انقضى % % يا سيدي وفدى لك المملوك % % PageV01P1443 البحر : - 1(@)(@@) % أقول للشاهد إذ ينثني % % عطف رشا قلبي به قد هلك % % 2(@)(@@) % يا معطف الشاهد سبحان من % % سواك في الحسن ومن عدلك % % PageV01P1444 البحر : - 1(@)(@@) % رب ذي شرط على الخ % % د وذي خال ممسك % % 2(@)(@@) % ملكا قلبي في الحب % وكان الشرط أملك % % PageV01P1445 البحر : - 1(@)(@@) % سلبت محاسنك الغزال صفاته % % حتى تحير كل ظبي فيكا % % 2(@)(@@) % لك جيده ولحاظه ونفاره % % وغدا تصير قرونه لأبيكا % % PageV01P1446 البحر : - 1(@)(@@) % لوالدك الممدوح مرأى مبارك % ولولاك في عليائه لم يشارك % % 2(@)(@@) % فان ترو أخبار التقى عنك والعلى % % فإنك عبد الله وابن المبارك % PageV01P1447 البحر : - 1(@)(@@) % إن عشت فيكم بغير قوت % فلست مستنكرا لذلك % % 2(@)(@@) % ما كنت فيكم بآدمي % فصرت من جملة الملائك % % PageV01P1448 البحر : - 1(@)(@@) % يا جفوني دعي الكرى بعد مرأى % % فاتن الحسن ناصب لشراك % 2(@)(@@) % فهو إما بحرفه أو بحسن % % ليس ينفك صائدا لكراكي % % PageV01P1449 البحر : - 1(@)(@@) % ومليح اذا نظرت إليه % % نظرة خففت أليم عذابك % % 2(@)(@@) % قال لي جفنه استعد لحربي % % قلت يا خده دمي في ثيابك % % PageV01P1450 البحر : - 1(@)(@@) % جدتم بما قل عن ظنوني % % فزاد في لوعتي وهلكي % % 2(@)(@@) % لا لذة اليسر في حماكم % % نلت ولا لذة التشكي % % PageV01P1451 البحر : - 1(@)(@@) % ما الطرف بعدكم بالنوم مكحول % % هذا وكم بيننا من ربعكم ميل % % 2(@)(@@) % يا باعثين سهادا لي وفيض بكا % % مهما بعثتم على العينين محمول % % 3(@)(@@) % هبكم منعتم 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms286# جفوني من خيالكم % % فكيف يمنع تذكار وتخييل % % 4(@)(@@) % في ذمة الله قلب يوم بينكم % موزع ودم في الحب مطلول % % 5(@)(@@) % شغلتم بصباح الأنس مبتسما % وناظري بظلام الليل مشغول % % 6(@)(@@) % كأنما الأفق محراب عكفت به % % والنيرات بأفقيه قناديل % % 7(@)(@@) % ما يمسك الهدب دمعي حين أذكركم % % إلا كما يمسك الماء الغرابيل % % 8(@)(@@) % ورب عاذلة فيما أكابده % % وقل ما قيل والتحذير معذول % % 9(@)(@@) % باتت زخارفها بالصبر واعدة ع وما مواعيدها إلا الأباطيلص سقيا لعهد الصبا والدار دانية سقط شطرين ص % % والشمل مجتمع والجمع مشمول % % 10(@)(@@) % يفدي الزمان الذي في عامه قصر % هذا الزمان الذي في يومه طول % % PageV01P1452 11(@)(@@) % لم لا أشبب بالعيش الذي سلفت % % أوقاته وهو باللذات موصول % % 12(@)(@@) % لو كنت ارتاع من عذل لروعني % % سيف المشيب برأسي وهو مسلول % % 13(@)(@@) % أما ترى الشيب قد دلت كواكبه % % على الطريق لو أن الصب مدلول % % 14(@)(@@) % و السن قد قرعتها الأربعون وفي % % ضمائر النفس تسويف وتسويل % % 15(@)(@@) % حتى م أسأل عن لهو وعن لعب % % وفي غد أنا عن عقباه مسؤول % % 16(@)(@@) % و لي سعاد شجون ما يعب لها % % إما خيال وإلا فهو تخييل % % 17(@)(@@) % أبكي اشتياقا اليها وهي قاتلتي % % يا من رأى قاتلا يبكيه مقتول % % 18(@)(@@) % مسكية الخال أما ورد وجنتها % % فبالجنى من عيون الناس مبلول % % 19(@)(@@) % فإن يفح من نواحي خدها عبق % فالمسك فيه بماء الورد مجبول % % 20(@)(@@) % تفتر عن شنب حلو لذائقه % % في ذكره لمجاج النحل تعسيل % % PageV01P1453 21(@)(@@) % مصحح النقل عن شهد وعن برد % لأنه منهل بالراح معلول % % 22(@)(@@) % و بارق من اعالي الجذع أرقني % % حتى دموعي على مرجانه لولو % % 23(@)(@@) % مذكري بدنانير الوجوه هدى % % تحف في فيه عذال مثاقيل % % 24(@)(@@) % إلى العقيق فهل يا طيب طيبة لي % % عقد بلفظي إلى مغناك منقول % % 25(@)(@@) % و هل رأى حامل الرجوى كأني من % % شوقي ومن ولهي بالقرب محمول % % 26(@)(@@) % إن لم أنل عملا أرجو النجاة فلي % % من الرسول بإذن الله تنويل % % 27(@)(@@) % حسبي بمدحي رسول باب نجا % يرجى اذا اعترضت تلك التهاويل % % 28(@)(@@) % أقول والقدر أعلا أن يحاوله % % وصل وان جهدت فيه الأقاويل % % 29(@)(@@) % ماذا عسى الشعراء اليوم مادحة % % من بعد ما مدحت حم تنزيل % % 30(@)(@@) % و أفصحت بالثنا كتب مقدمة % % إن 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms287# جيل في الدهر توراة وانجيل % % PageV01P1454 31(@)(@@) % محمد المجتبي معنى جبلته % % وما لآدم طين بعد مجبول % % 32(@)(@@) % و المجتلى تاج علياه الرفيع وما % % للبدر تاج ولا للنجم إكليل % % 33(@)(@@) % لولاه ما كان أرض لا ولا أفق % % ولا زمان ولا خلق ولا جيل % % 34(@)(@@) % و لا مناسك فيها للهدى شهب % % ولا ديار بها للوحي تنزيل % % 35(@)(@@) % ذو المعجزات التي ما استطاع أبرهة % يغزو منازلها كلا ولا الفيل % % 36(@)(@@) % إن شق ايوان كسرى رهبة فلقد % % جاء الدليل بأن الكفر مخذول % % 37(@)(@@) % و إن خبا ضرم النيران من زمن % % فالبحر منسحب الأذيال مسدول % % 38(@)(@@) % أوفى النبيين سيفا واتضاح على % % كأنه غرة والقوم تحجيل % % 39(@)(@@) % نعم اليتيم اذا عدت جواهرهم % % وضمها من عقود الوحي تفصيل % % 40(@)(@@) % مازال في الخلق ذاجاه وذا خدم % % لكن خادمه المشهور جبريل % % PageV01P1455 41(@)(@@) % مبرأ القلب من ريب ومن دنس % % وكيف وهو بماء الخلد مغسول % % 42(@)(@@) % مجاهدا في سبيل الله مصطبرا % على الجراح وبعض الجرح تعديل % % 43(@)(@@) % في معشر نجب تغزو نبالهم % مالا غزت في العدى الطير الابابيل % % 44(@)(@@) % كأنما نبل ماضيهم وحاضرهم % % لها على من بغى سجل وسجيل % % 45(@)(@@) % مثل الشواطب ان صالوا أو افتخروا % % فالحد مندلق والعرض مصقول % % 46(@)(@@) % يطيب في الليل تسبيح لسامرهم % % ومالهم عن حياض الموت تهليل % % 47(@)(@@) % كأنهم لانتظار الفضل بيت ثنا % % شخص النبي له معنى وتكميل % % 48(@)(@@) % قوم إذا رقصت فرسانهم طربا % كأن رايات أيديهم مناديل % % 49(@)(@@) % الكاتبون من الاجسام ما اعتبرت % % سمر وبيض فمنقوط ومشكول % % 50(@)(@@) % حيث الحمام شهي وهو من صبر % % يجنى فيا حبذا الغر البهاليل % % PageV01P1456 51(@)(@@) % حتى استقام عمود الدين وانفتحت % % سبل الهدى وخبت تلك الاضاليل % % 52(@)(@@) % روح النجاة الذي قد كان يهرع في % % أبواب مغناه روح الوحي جبريل % % 53(@)(@@) % و مفصح حين يروي الصاد من كرم % % فللمحاسن ترتيب وترتيل % % 54(@)(@@) % و جائد لا يخاف الفقر قال ندى % % كفيه يا مادحي آلائه قولوا % % 55(@)(@@) % و ماالاقاويل ان طالت وان قصرت % % عروض ما بسطت تلك الافاعيل % % 56(@)(@@) % حامي حمى البيت بالرعب المقدم ما % % ناواه أبرهة العادي ولا الفيل % % 57(@)(@@) % تضيئ في الحرب والمحراب طلعته % % فحبذا في الدجى والنقع قنديل % % 58(@)(@@) % و قام في ظل بيت الله شائده % % فحبذا لنظام البيت تكميل % % 59(@)(@@) % ذاك 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms288# الذي نصبت في نحو بعثته % % هذي المحاريب لا تلك التماثيل % % 60(@)(@@) % و فاض من جانب البطحا لكل حمى % % صاف بأبيض أضحى وهو مشمول % % PageV01P1457 61(@)(@@) % و كل أرض بها الجناب مزهرة % % للمؤمنين فتعجيل وتأجيل % % 62(@)(@@) % وكل ملة دين غير ملته % % تروى فللقابس القسيس قنديل % % 63(@)(@@) % ولليهودي مع كحل العمى نظر % % على المجوسي أيضا فيه نكحيل % % 64(@)(@@) % حتى أتى عربي يستضاء به % % مهند من سيوف الله مسلول % % 65(@)(@@) % كم معجز لرسول الله قد خذلت % % به العدى وعدو الحق مخذول % % 66(@)(@@) % فاض الزلال المهنى من أصابعه % % نعم الأصابع من كفيه والنيل % % 67(@)(@@) % وبورك الزاد إذ مسته راحته % % فحبذا مشرب منها ومأكول % % 68(@)(@@) % وخاطبته وحوش البيد مقبلة % فالرجل عاسلة واللفظ معسول % % 69(@)(@@) % وحاز سهم المعالي حين كان له % % من قاب قوسين تنويه وتنويل % % 70(@)(@@) % على البراق لوجه البرق من خجل % % ورجل مسعاه تلوين وتشكيل % % PageV01P1458 71(@)(@@) % لسدرة المنتهى يا منتهى طلبي % % ما مثله ياختام الرسل تحويل % % 72(@)(@@) % يا خاتم الرسل لي في المذنبين غدا % على شفاعتك الغراء تعويل % % 73(@)(@@) % ان كان كعب بما قد قال ضيفك في % % دار النعيم فلي في الباب تطفيل % % 74(@)(@@) % وأين كابن زهير لي شذا كلم % ربيعها بغمام القرب مطلول % % 75(@)(@@) % وإن سمي بزهير صيغة فعسى % % يسمو بنبت له بالشبه تعليل % % 76(@)(@@) % بانت معاذير عجزي عن نداك وعن % % بانت سعاد فقلبي اليوم متبول % % 77(@)(@@) % صلى عليك الذي أعطاك منزلة % شفيعها في مقام الحشر مقبول % % 78(@)(@@) % أنت الملاذ لنا دنيا وآخرة % فباب قصدك في الدارين مأهول % % PageV01P1459 البحر : - 1(@)(@@) % نفس عن الحب ما حادت ولا غفلت % % بأي ذنب وقاك الله قد قتلت % % 2(@)(@@) % وعين صب إلى مرآك قد لمحت % % كفى من الدمع والتسهيد ما حملت % % 3(@)(@@) % دعها ومدمعها الجاري فقد لقيت % % ما قدمت من أذى قلبي وما عملت % % 4(@)(@@) % أفديك من ناشط الأجفان في تلفي % % والسحر يوهم طرفي أنها كسلت % % 5(@)(@@) % وواضح الحسن لوشاءت ذوائبه % % في الأفق وصل دجى الظلماء لاتصلت % % 6(@)(@@) % معسل بنعاس في لواحظه % % أما تراها إلى كل القلوب حلت % % 7(@)(@@) % من لي بألحاظ ظبي تدعي كسلا % وكم ثياب ضنا حامكت وكم غزلت % % 8(@)(@@) % وسمرة فوق خديه ومرشفه % % هذي تروت مجانيها وذي ذبلت % % 9(@)(@@) % أما كفاني تكحيل الجفون أسى 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms289# % حتى المراشف أيضا باللمى كحلت % % 10(@)(@@) % لو ذقت برد رضاب في مراشفه % % يا حار ما لمت أعضائي التي ثملت % % PageV01P1460 11(@)(@@) % أستودع الله أعطافا شوت كبدي % % وكلما رمت تجديد الوصال قلت % % 12(@)(@@) % ومهجة لي كم ألقت بمسمعها % % إلى الملام ولا والله ما قبلت % % 13(@)(@@) % كأن عيني اذا ارفضت مدامعها % % عن المؤيد أو صوب الحيا نقلت % % 14(@)(@@) % ملك له في الوغى والسلم بسط يد % % مأثورة الفضل ان صالت وان وصلت % % 15(@)(@@) % تعطي الألوف اذا جادت لمطلب % % ومثل أعدادها تردى اذا قتلت % % 16(@)(@@) % في كل نهج ومرماة ركاب سرى % % لولا ابن أيوب ماشدت وما رحلت % % 17(@)(@@) % إن تغش أبواب معناه التي فتحت % % فطالما بالعطايا والندى قفلت % % 18(@)(@@) % سل عن عطاياه تسأل كل وافدة % % من المدائح فازت قبلما سألت % % 19(@)(@@) % فضل أبر فوفي الحمد غايته % % وراحة فعلت كل الندى فعلت % % 20(@)(@@) % وسيرة عدلت في الخلق قاطبة % % مع أنها عن سبيل الحق ما عدلت % % PageV01P1461 21(@)(@@) % وهمة في العلى والعلم دائبة % % شبت على شرف الفنيين وابتهلت % % 22(@)(@@) % هذي السيادة تعلو كلما اتضعت % % وأنمل الفضل تهمي كلما عذلت % % 23(@)(@@) % أنى يقابس بالأنواء نائله % % وهي التي باحمرار البرق قد خجلت % % 24(@)(@@) % جادت يداه بلا من ينغصها % % والمن يظهر في الانواء ان نزلت % % 25(@)(@@) % وشاد بالجود ما شادت أوائله % % والسحب قد تهدم البنيان ان هطلت % % 26(@)(@@) % لا شيء أليق من مرآي أنامله % % اذا تأملت أمريها وما كفلت % % 27(@)(@@) % تخط بالرمح في الاجساد صائلة % % وتطعن العسر بالأقلام ان بذلت % % 28(@)(@@) % لحملة الحرب أو حمل الندى خلقت % % فليس تنفك من شكر لما حملت % % 29(@)(@@) % لو قيل إن شموس الصحو خافية % % ما قال عنها عدو أنها بخلت % % 30(@)(@@) % يممه والسحب عقم واخش سطوته % % والخيل من حدب الهيجاء قد نسلت % % PageV01P1462 31(@)(@@) % ذاك الكريم الذي يجدي مدائحنا % % وكان يكفي من الجدوى اذا قبلت % % 32(@)(@@) % من مبلغ الاهل أني ضيف أنعمه % % وان كفي على الآمال قد حصلت % % 33(@)(@@) % عزيمة السعي ما خابت وسائلها % % وآية المنطق السحارما بطلت % % 34(@)(@@) % وانشر على الناس أمداحي التي اشتهرت % % فانها في معاني مجده اشتغلت % % 35(@)(@@) % أما ووصف ابن شاد قد سما وعلا % % والله ما قصرت عيني ولا سفلت % % 36(@)(@@) % لا أسأل الله إلا أن يدوم لنا % % لا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms290# أن تزاد معانيه فقد كملت % % PageV01P1463 البحر : - 1(@)(@@) % حلفت بما يملا النديم وما يملي % % لقد بت عن عذل العواذل في شغل % % 2(@)(@@) % اذا نادت الاحشاء يا آل محرق % % أجابت فنادت فكرتي يا بني ذهل % % 3(@)(@@) % بروحي فتاك اللواحظ طالب % % كرى مقلتي يوم النوى زدته عقلي % % 4(@)(@@) % من المغل أشكو نحوه ألم الهوى % % وطب الهوى عندي كما قيل بالمغلي % % 5(@)(@@) % أعيذ سناه والعذار وريقه % % بما قد أتى في النور والنمل والنحل % % 6(@)(@@) % وأصبوا إلى السحر الذي في جفونه % % وان كنت أدري أنه جالب قتلي % % 7(@)(@@) % و أملأ أوصال الدروج رسائلا % فتبخل هاتيك الشمائل بالوصل % % 8(@)(@@) % و يعجبني رمل المنجم باسمه % % وما ذاك الا حب من حل بالرمل % % 9(@)(@@) % لعل الصبا تهدي الي رسالة % % فقد تعبت ما بيننا ألسن الرسل % % 10(@)(@@) % يعللني مسرى الرياح وطالما % % تعللت العشاق بالريح من قبلي % % PageV01P1464 11(@)(@@) % و يعذلني من لا يهيم وأدمعي % % كجدوى عماد الدين سابقة العذل % % 12(@)(@@) % اذا سحبت جدوى المؤيد ذيلها % % تغطى فخار الفضل في ذلك الفضل % % 13(@)(@@) % مليك اذا رمنا مديح جلاله % % فأقلامنا تجري وأوصافه تملي % % 14(@)(@@) % مجدد أيام المحامد والندى % % ودافع أيام الشكاية والأزل % % 15(@)(@@) % و باعثها للحرب جردا سوابحا % كأن دم الأبطال من تحتها يغلي % % 16(@)(@@) % اذا حفيت فوق الجسوم تعوضت % % بكل جبين كالهلال عن النعل % % 17(@)(@@) % اذا مادعته الحرب ياقاتل العدى % % بدا فدعاه الجود يا قاتل المحل % % 18(@)(@@) % اذا جئته للعلم والجود طالبا % فيالك بحر باهر الفضل والفصل % % 19(@)(@@) % يقدم في أهل العلى شرف اسمه % % كما قدم الاسم النحاة على الفعل % % 20(@)(@@) % و تخدمه حتى النجوم محبة % % ومن أجل ذا تعزى النجوم إلى عقل % % PageV01P1465 21(@)(@@) % هو المرتقي فوق السها بعزائم % درت كيف ترقى للفخار وتستعلي % % 22(@)(@@) % تفرد لولا ناصر الدين بالعلى % % فيا حبذا أنس الغضنفر بالشبل % % 23(@)(@@) % سليل علا شفت مخايل مجده % % ودلت كما دل الفرند على النصل % % 24(@)(@@) % يروق لرائيه عليه من النهى % % ألذ حلى مما يروق من الشكل % % 25(@)(@@) % و تعرف فيه من أبيه شمائلا % ومن جده والسابقين من الأهل % % 26(@)(@@) % حوى الدهر من علياه أشرف نسخة % فقابلها يوم المفاخر بالأصل % % 27(@)(@@) % كأنك ياظل العفاة بشخصه % % يجاريك للعلياء كالشخص والظل % % 28(@)(@@) % يمد لك الله التمكن والبقا % % ويعطيك ما 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms291# ترجوه من رتب الفضل % % 29(@)(@@) % إلى أن تراه في ذرى المجد راقيا % رفيع منار الذكر منتشر العدل % % 30(@)(@@) % مثيلك في يومي وغى ومكارم % وقد قمت أياما كثيرا بلا مثل % % PageV01P1466 31(@)(@@) % و ملتقيا مني مدائح عودت % % فرائدها لقيا مقامك من قبل % % 32(@)(@@) % أصوغ له منها وألحق نسله % % فأجمع مدح الجد والأب والنجل % % 33(@)(@@) % فديتك ملكا في نداه وبشره % % غمام لمستجد وصبح لمستجلي % % 34(@)(@@) % تخيرته دون الأنام ولذ لي % % به بدل البعض الجميل من الكل % % 35(@)(@@) % و أنزلت آمالي لديه وإنه % % لآكرم من آل المهلب في المحل % % 36(@)(@@) % تفصح لفظي مجزلات هباته % % فتحسن أمداح الجزيلة بالجزل % % 37(@)(@@) % سقى الله أيام المؤيد بالهنا % % إذا ما سقى الأيام بالطل والوبل % % 38(@)(@@) % لقد أمنتنا من أذى كل حادث % % وقد فرغتنا للتنعم والدل % % 39(@)(@@) % فلا جائز فينا سوى ساق غادة % % ولا ظالم إلا من الأعين النجل % % PageV01P1467 البحر : - 1(@)(@@) % أهوى بمرشفة الشهي وقال ها % % ويلاه من رشاء أطاع وقالها % % 2(@)(@@) % وأمالت الكاسات معطف قده % % بقصاص ما قد كان قبل أمالها % % 3(@)(@@) % فمصصت من رشفاته معسولها % % وضممت من أعطافه عسالها % % 4(@)(@@) % وظفرت في اليقظات منه بخلوة % % ما كنت آمل في المنام خيالها % % 5(@)(@@) % و لربما أهوى بكأس مدامة % % لولاه ما حملت يدي جريا لها % % 6(@)(@@) % طبخت بنار خدودة في كفه % % فقبلتها وشربت منه حلالها % % 7(@)(@@) % حتى إذا هوت النجوم وأطفأت % % في الصبح أنفاس النسيم ذبالها % % 8(@)(@@) % ولي وأسأر في الجوانح حسرة % % لو شاء عائد وصله لآزالها % % 9(@)(@@) % ومضى بشمس محاسن لولا الهدى % % ما كنت أمسك في الوفاء حبالها % % 10(@)(@@) % و من البلية عذل قد ضمنت % % ثقل الملام مقالها وفعالها % % PageV01P1468 11(@)(@@) % ياليت أرض العاذلين تزلزلت % % أوليتها لا أخرجت أثقالها % % 12(@)(@@) % و النجم من كأس الحبيب وخده % % لا زاغ فكري عن هواه ولا لها % % 13(@)(@@) % بأبي مضيء الحسن ناء شخصه % % سلت الكواكب حسنها وجمالها % % 14(@)(@@) % متلون الأخلاق إلا أنها % % لشقاوتي ليست تمل ملالها % % 15(@)(@@) % لوذاق حالة مهجتي ما راعني % % دعه يروع ولا يقاسي حالها % % 16(@)(@@) % هي مهجة ليست يجاور صبرها % % كيد المؤيد لا يجاور مالها % % 17(@)(@@) % جادت يد الملك المؤيد جود من % % لم تخش بسطة كفه إقلالها % % 18(@)(@@) % يا عاذل الملك المؤيد في الندى % % هي صبوة قد أتعبت عذالها 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms292# % % 19(@)(@@) % و شمائل مدت يمين مكارم % % لم ترض أن يدعى الغمام شمالها % % 20(@)(@@) % سبقت سؤال عفاتها وتعقمت % % في الجود حتى سابقت آمالها % % PageV01P1469 21(@)(@@) % مالابن شاد في العلى مثل فدع % % علياه تضرب في الورى أمثالها % % 22(@)(@@) % رقمت بنو أيوب نسخة أصلها % % وأتى فكان تمامها وكمالها % % 23(@)(@@) % ملك تطاولت المطالب نحوه % % لكنه بأقل طول طالها % % 24(@)(@@) % متطابق النعماء صانت كفه % % سرح القريض وشردت أموالها % % 25(@)(@@) % أخذت براءته العفاة بدهره % % مما تخاف وقسمت أنفالها % % 26(@)(@@) % نعماه في عصب قلائد حليها % % فاذا بغت عصب غدت أغلالها % % 27(@)(@@) % يارب مكرمة ورب كريهة % % أضحى معيد حياتها قتالها % % 28(@)(@@) % و مسائل في العلم أشكل أمرها % % حلا وحل لطالب أشكالها % % 29(@)(@@) % بيراع سيف أو بسيف يراعة % % فصل الامور جلادها وجدالها % % 30(@)(@@) % قل للمثل في البسيطة وصفه % % دع سحبها وبحارها وجبالها % % PageV01P1470 31(@)(@@) % هاتيك أمثلة دنت عن قدره % % فاطلب لهاتيك الصفات مثالها % % 32(@)(@@) % لحماك يا ابن المالكين ترقبت % % فكر الرجا رقبى العيون هلالها % % 33(@)(@@) % أما حماه فنعم دار سيادة % % نصبت بمدرجة الطريق جلالها % % 34(@)(@@) % يسعى لمكة وافد ولأرضها % % ولنعم أرضا وافد يسعى لها % % 35(@)(@@) % هاتيك قبلة من يروم رشادها % % وحماه قبلة من يروم نوالها % % 36(@)(@@) % في كل حال حولها لي معجب % لله ما أشهى إذا أحوالها % % 37(@)(@@) % شكرت لهاك فما أشك بأنني % % ثقلت وهي مطيقة أثقالها % % 38(@)(@@) % أغنيتني عن كل ذي مال فلم % % أفتح يدا لسوى نداك ولا لها % % 39(@)(@@) % و كفيتني حتى قفوت معاشرا % كثر النددى فاستكثرت أطفالها % % 40(@)(@@) % أيام مالي غير قصدك حيلة % % تنجي وتنجح في الورى نطالها % % PageV01P1471 41(@)(@@) % لازلت مقصود الحمى بقصائد % % أصبحت عصمة أمرها وثمالها % % 42(@)(@@) % لولاك لم يخطر ببالي نظمها % % لا والذي يلقاك أنعم بالها % % 43(@)(@@) % سألت روايات الندى فتأخرت % % عنها الورى وأجزت أنت سؤالها % % PageV01P1472 البحر : - 1(@)(@@) % سلوت لكن قلبي يا سعاد سلي % % وأنت في الحل من قلبي ومن قبلي % % 2(@)(@@) % قد جاء ما جاء من رأي ومن رشد % وزال مازال من غي ومن زلل % % 3(@)(@@) % لا الرشد ساعدني من قبل ذاك ولا % % إصالة الرأي صانتني عن الخطل % % 4(@)(@@) % ولا الوجوه قناديل تخادعني % % في الحسن في طرر الاصداغ كالقبل % % 5(@)(@@) % حتى أضا الشيب في فودي فأرشدني % % إلى الهدى في سواد الرأس كالشعل % % 6(@)(@@) % فلا الخلاعة بعد 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms293# اليوم من أربي % % ولا التغزل في الأشعار من شغلي % % 7(@)(@@) % و غاض ماء الشباب قد عصيت به % % رأي النصيح فلم أسمع ولم أخل % % 8(@)(@@) % و لا حصلت على دنيا وآخرة % % الا بدولة من أنشا ذوي الدول % % 9(@)(@@) % أنشي مدائح سلطان العباد بلا % % لغو وأتلو معانيها بلا خلل % % 10(@)(@@) % الناصر اسما وألقابا وأفعلة % فانظر لنصر على عطفيه مشتمل % % PageV01P1473 11(@)(@@) % ملك تنقل في مدح يلذ له % % يا لذة النقل أو يا لذة النقل % % 12(@)(@@) % سلطان مصر الرخا والأمن عم فما % % بها سوى النيل قطاع على السبل % % 13(@)(@@) % أسعى لأبوابه العليا يبشرني % % بشيرها بنجاح القصد والأمل % % 14(@)(@@) % و تنتهي بي إلى أبوابه مدح % % تخطو وتخطر بين الحلي والحلل % % 15(@)(@@) % من فضل جدواه أرجوها فيغرقني % % بحر لديه بحار الأرض كالوشل % % 16(@)(@@) % ينجي الغريق اذا أعطى وبعض مضا % % سيوفه تفرق الأعداء بالبدل % % 17(@)(@@) % جودا وبأسا كأن الأرض بينهما % % لم تبد عشبا سوى الأقلام والأسل % % 18(@)(@@) % مقسم السيف والأقلام يوم ندى % % ويوم هيجاء بين الرزق والأجل % % 19(@)(@@) % أوفى الملوك اذا عدوا لسابقة % تلو الزمان وتلو الأعصر الأول % % 20(@)(@@) % جاؤوا على عجل لا يلحقون مدا % % سبق كأنهم جاؤا على مهل % % PageV01P1474 21(@)(@@) % وشائد الملك مشغول بأربعة % % من العطا والسطا والعلم والعمل % % 22(@)(@@) % نجل الملوك اذا جروا عساكرهم % % ألهتهم الطعنة النجلا عن النجل % % 23(@)(@@) % وصرفوا الرأي في عدل ومعرفة % حتى بكل طرير السن معتدل % % 24(@)(@@) % ذو الرأي والراية العلياء سيرته % % عمالة الجد بين الحيل والحيل % % 25(@)(@@) % ان لم تكن سيرة البطال فهي بما % % أذاقه للأعادي سيرة البطل % % 26(@)(@@) % يامن اذا شغل الاملاك لهوهم % % فنفسه بالتقى والملك في شغل % % 27(@)(@@) % تهن عاما مضيء السعد متصلا % بألف عام مضيء السعد متصل % % 28(@)(@@) % عام يقول على رأسي سعت قدمي % % لرأس عام بهذا العام محتفل % % 29(@)(@@) % و كالهلال حبي طهر السلام إلى % % بدر فيا حسن مهلول ومكتمل % % 30(@)(@@) % و العشر قبل من يمناك خمستها % % عشرا وعشرا ولا يروى من القبل % % PageV01P1475 31(@)(@@) % فدى لطلعتك الأقمار طالعة % % بعد الأهلة كالأخوال والخول % % 32(@)(@@) % متى يوفي مقال المدح ما عملت % % نعماك شتان بين القول والعمل % % 33(@)(@@) % فعش ودم للعلى والملك مطلعا % على المفاخر طلاعا على القلل % % 34(@)(@@) % نلنا المنى السهل يامن حلمه جبل % يا فائض 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms294# الفضل بين السهل والجبل % % PageV01P1476 البحر : - 1(@)(@@) % إنسان عيني بتعجيل السهاد بلي % % عمري لقد خلق الانسان من عجل % % 2(@)(@@) % إن أكتم الحب لم تكتم دلائله % % وان أمل لطريق الصبر لم أمل % % 3(@)(@@) % شوقا لمحرسة العذال إن نظرت % % سباقة لسيوف اللحظ للعذل % % 4(@)(@@) % نشيطة العطف كحلا الطرف لو كحلت % % لم يرفع الميل جفنيها من الكسل % % 5(@)(@@) % عدمت صبري ولم أظفر بريقتها % % فما حصلت على صاب ولا عسل % % 6(@)(@@) % نالت برغم الغواني فوق ما وصفوا % % بالحيل حسنا ونالوا البعض بالحيل % % 7(@)(@@) % هذا وكم غزلت أجفان مقلتها % % ثوب السقام لجسم الباسل البطل % % 8(@)(@@) % غزالة الجفن من غزلان مصر لقد % % ملأت من غزلك الدنيا ومن غزل % % 9(@)(@@) % سقيا لعهد الصبا أيام أسبقها % % طورا وتسبقني للهو والجدل % % 10(@)(@@) % أصيدها في حبال الشعر عاثرة % % يا حبذا الظبي في إشراك محتبل % % PageV01P1477 11(@)(@@) % وقد أطارح ورق البان حين نأت % % منها النواح ومني دمع منهمل % % 12(@)(@@) % و استصح بمعتل الصبا جسدي % % وربما صحت الأجسام بالعلل % % 13(@)(@@) % لا الصبر ساعد قلبي في السلو ولا % % إصالة الرأي صانتني عن الخطل % % 14(@)(@@) % حتى أضا الشيب في فودي فأرشدني % % إلى الهدى في ظلام الفود بالشغل % % 15(@)(@@) % فما الصبابة بعد اليوم من أربي % % ولا التغزل في الأمداح من شغلي % % 16(@)(@@) % يامن له تركع الأفلام مادحة % % كأنها من قبيل الطرس في قبل % % 17(@)(@@) % أنت الذي أنبتت ملك الجنان له % % دعوى مكاتبه في المحضر الجلل % % 18(@)(@@) % يامن رأى جوده العافون منشرحا % فوجهوا العيس تطوي الرمل بالرمل % % 19(@)(@@) % تهن عيدا سعيد الفضل حين فدى % % نعليك بالناس من حاف ومنتعل % % 20(@)(@@) % خير الممالك في خير المواسم يا % % خير السلاطين يأتي خيرة الدول % % PageV01P1478 21(@)(@@) % عداك من جملة الأنعام سارحة % % فصل وانحر ودم وافخر وصل وصل % % 22(@)(@@) % و الحظ مدائح عبد قد أجاد بما % % جادت يداك به من ماطر هطل % % 23(@)(@@) % لي في ذوي النظم روض يستطاب شذا % % ريحانه الغض أو نوارة الخضل % % 24(@)(@@) % تحمى البزاة بغاث الطير حوزته % % فالورق طيارة عنه مع الحجل % % 25(@)(@@) % و أنت غيث على ناء ومقترب % % فصانك الله في حل ومرتحل % % 26(@)(@@) % و لا تزل للورى جبرا لمنكسر % % وقرا لمفتقر ملكا لممتثل % % 27(@)(@@) % ربيع عدلك في الأقطار منتشر % فكل يوم حلول الشمس في 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms295# الحمل % % PageV01P1479 البحر : - 1(@)(@@) % غازلتنا فأعيدي ماضي الغزل % % شواهر البيض من مسودة المقل % % 2(@)(@@) % إنا إلى الله تلهينا الأوانس عن % % مساجد النسك بالاصداع كالقبل % % 3(@)(@@) % غيد بدت فتولى الظبي من حنق % % يسعى وأطرق غصن البان من خجل % % 4(@)(@@) % بأوجه من بني بدر تناضلنا % % من دونها لحظات من بني ثعل % % 5(@)(@@) % من كل مسكرة الألحاظ مائسة % % يهزها الدل هز الشارب الثمل % % 6(@)(@@) % معسولة الثغر إلا أن قامتها % % منسوبة القد للعسالة الذبل % % 7(@)(@@) % يلذ لي هجرها مع بغضها بدلا % من البعاد ومن للعثور بالحول % % 8(@)(@@) % عدمت صبري ولم أظفر بريقتها % % فما حصلت على صاب ولا عسل % % 9(@)(@@) % و عاذلي ليس يدري أن ناظرها % % سيف إلى قتل مثلي سابق العذل % % 10(@)(@@) % خالي الحشا ان دعا فكري لشكواته % % أجاب دمعي وما دمعي سوى طلل % % PageV01P1480 11(@)(@@) % يامن تملك سكنى القلب معطفها % % أعلى الممالك ما يبنى على الأثل % % 12(@)(@@) % ماذا على العاذل الجهمي منظره % % إن الصبابة من كسبي ومن عملي % % 13(@)(@@) % و ماعلى ظاهري من محاسنها % % إني على الصبر فيها أي معتزل % % 14(@)(@@) % لم أنس اذ زارني طيف الخيال بها % % يخطو ويخطر بين الحلي والحلل % % 15(@)(@@) % مأمورة الوصل والهجران جائرة % % بالردف والعطف بين الريث والعجل % % 16(@)(@@) % سقيا لعطف على ردف ينوء به % % وحبذا جبل الريان من جبل % % 17(@)(@@) % و حبذا غزلي في الخصر قلت له % % يا خير منتحل في خير منتحل % % 18(@)(@@) % و حبذا العيش والأيام مسعفة % ومصر داري وأحبابي بها خولي % % 19(@)(@@) % يا بارقا من نواحي مصر مبتسما % بلغ تحية هامي الدمع منهمل % % 20(@)(@@) % واذكر اذا هب معتل الصبا جسدي % % فربما صحت الأجساد بالعلل % % PageV01P1481 21(@)(@@) % و الملك يصلح عقباها بصالحه % % والفضل يقسم من ساداتها بعلي % % 22(@)(@@) % رب العطا والنقا إن شمت برقهما % % علمت أن عليا كيف شاء ولي % % 23(@)(@@) % الباذل الوفر في بدو وفي حضر % % والجامع الحمد من سهل ومن جبل % % 24(@)(@@) % لله كم للعلى بكر محجبة % زفت اليه لقد زفت إلى رجل % % 25(@)(@@) % ثبت الجوانب والدنيا مزلزلة % % وصائل الرأي والقرضاب لم يصل % % 26(@)(@@) % و الكامل الذات يروي فضل سؤدده % % عوالي الفضل عن آبائه الكمل % % 27(@)(@@) % تجمعت فيه أقسام الفخار كما % % تجمعت قسم التفصيل في الجمل % % 28(@)(@@) % نوال عز أضافته الصفات إلى % % تدبير محتنك 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms296# في عزم مكتهل % % 29(@)(@@) % إذا سقى ماله الظمآن أتبعه % % جاها فيا لك من عل على نهل % % 30(@)(@@) % في مصر والشام يرجى سحب ذي كرم % % بالجود مشتهر بالحمد مشتمل % % PageV01P1482 31(@)(@@) % مطابق الوصف فوق النجم موضعه % % والجود يدنيه قيس الكف للأمل % % 32(@)(@@) % لو قال طلت السهى قال الأنام نعم % % يا صادق القول والعلياء فقل وطل % % 33(@)(@@) % مازال يعدل حتى ما بمصر سوى % % من فائض النيل قطاع على السبل % % 34(@)(@@) % و منشئ اللفظ نبعا للقلاع فما % % يرى كنبعك طلاعا على القلل % % 35(@)(@@) % نعم الفتى أنت في السادات اكبر من % % مثل وأسير في الأوصاف من مثل % % 36(@)(@@) % و ابرع الناس نطقا ليس محتفلا % فكيف حين يراعى فكر محتفل % % 37(@)(@@) % في كفه قلم ناهيك من قلم % % ومن حسام ومن رزق ومن أجل % % 38(@)(@@) % معدل بشهادات العلى وله % % جراح يوم سطا يقذفن بالقتل % % 39(@)(@@) % حكاه في قطعه حد الحسام وما % % حكاه في مقبل الأرزاق متصل % % 40(@)(@@) % سد يا علي فما أبقيت منقبة % % يمتاز عنك بها في الأعصر الأول % % PageV01P1483 41(@)(@@) % تحفى بمدحك أقلام مننت على % % آمالها وعلى الأسياف في الخلل % % 42(@)(@@) % يا باسط الجود في سيف وفي قلم % % لقد مننت على حاف ومنتعل % % 43(@)(@@) % يا ابن السراة إلى الفاروق نسبتهم % % وجمعهم لفخار القول والعمل % % 44(@)(@@) % البالغين مدى العليا ولو قعدوا % % والسابقين ولو ساروا على مهل % % 45(@)(@@) % من كل فاتح أرض غير طائعة % % مبارك الفتح أنى سار والقفل % % 46(@)(@@) % فكل مقترب الأقلام ساجدها % % بأشرف اللفظ يحمي أشرف الملل % % 47(@)(@@) % بلغتني يا ابن فضل الله مطلبا % لم أرجه من بني الدنيا ولم أخل % % 48(@)(@@) % نلت العلى وكبت الحاسدين على % % يد اغتنائك لا حيلي ولا حيلي % % 49(@)(@@) % وقد سموت لديوان الرسائل في % % طي ادكارك لا كتبي ولا رسلي % % 50(@)(@@) % مدا أخوك إلى مرقاه أوصلني % % ولو ترقى اليه النسر لم يصل % % PageV01P1484 51(@)(@@) % و إن تعذر معلومي عليه ففي % % معلوم جودك أو في مدحه شغلي % % 52(@)(@@) % ان مد قصدي في الدنيا لغيركم % % يد الرجا فرماها الله بالشلل % % 53(@)(@@) % بلغتم آل فضل الله منزلة % % تحول زهر الدراري وهي لم تحل % % 54(@)(@@) % يخف نظم المعاني في مدائحكم % % وفي سواكم فما يخلو من الثقل % % 55(@)(@@) % و يألف الناس عطفا من عوارفكم % % فما 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms297# تميل أوانيهم إلى بدل % % 56(@)(@@) % أنتم رجائي الذي وحدت مقصده % % في العالمين ولم أعكف على هبل % % 57(@)(@@) % مالي وما للسرى قصدا لغيركم % % هيهات لا ناقتي فيها ولا جملي % % 58(@)(@@) % فما لإيضاح لفظي لا يضيئ بكم % % وقد بذلتم له الأموال بالجمل % % 59(@)(@@) % فدونكم من ثنائي كل سائرة % % مرخى لها في عنان القول بالطول % % 60(@)(@@) % سيارة في بسيط النظم مسرعة % % فياله من بسيط جاء في رمل % % PageV01P1485 61(@)(@@) % اسعى على درر المعنى بأبحرها % % وسعي غيري في مستفعلن فعل % % 62(@)(@@) % بقيتم يا بني العلياء في نعم % ملء الزمان وفي أمن وفي جذل % % 63(@)(@@) % تقاسم الناس في أيام سؤددكم % % يوما وليلا فمن مثن ومبتهل % % PageV01P1486 البحر : - 1(@)(@@) % في ثغرها الحلو أو في جيدها الحالي % % لا أرغم الله الا أنف عذالي % % 2(@)(@@) % ان يسل قلبي بنار في محبتها % % فلا وحق هواها لست بالسالي % % 3(@)(@@) % غزالة الحي إشراقا وملتفتا % ما كفؤ جيدك الا عقد أغزالي % % 4(@)(@@) % جملت بيتي من نظم ومن نسب % يا ابنة العم أو يا ربة الخال % % 5(@)(@@) % يا حبذا الخال اكسيرا على ذهب % ما مثله بسويدا مهجة غالي % % 6(@)(@@) % ولا بأسود عين ربما ربحت % % بلمحة الردف قنطارا بمثقال % % 7(@)(@@) % كحلت بالسهد جفنيها وقد وصلت % % مسافة النأي أميالا بأميال % % 8(@)(@@) % في كل ليل مديد مثل شعرك ما % % مددت للصبر فيها عزم محتال % % 9(@)(@@) % حبال شعرك يا لمياء صيرني % % إلى التصبر أمشي مشي حبالي % % 10(@)(@@) % و طول حبك قطاع عرى جلدي % % فليت طيفك وصى لي بوصال % % PageV01P1487 11(@)(@@) % يزور الوصل عن لمياء تحكم لا % % حكم الاذلة لكن حكم ادلال % % 12(@)(@@) % شامية بين جفنيها يمانية % % تقد بالسحر قلبا قبل أوصال % % 13(@)(@@) % ماضي الولاية في العشاق ناظرها % % وا حر قلباه من ذا الناظر الوالي % % 14(@)(@@) % مجانس الحسن من فيها ومعطفها % % فالحسن ما بين معسول وعسال % % 15(@)(@@) % و قيل أسماء في أفعالها عنت % فالحزن ما بين أسماء وأفعال % % 16(@)(@@) % بينا تروي بوصل أظمأت بجفا % % فخالطت رمضانا لي بشوال % % 17(@)(@@) % كانت عن المرتضى تملي أماليها % % واليوم تروي أماليها عن القالي % % 18(@)(@@) % و عاذلين عليها زلزت بهم % أرض التجلد عندي كل زلزال % % 19(@)(@@) % ان حدثتهم بأخبار الأسى فلما % % قد أخرجت لي منهم أي أثقال % % 20(@)(@@) % من كل داع وماجاوبته سقما % % كأنه 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms298# واقف مني بأطلال % % PageV01P1488 21(@)(@@) % ان كل لي أمل في الصبر عنك فلا % % بلغت من نفحات القرب آمالي % % 22(@)(@@) % حبي جديد على مر الزمان فلا % % يخطر حديث سلوي منك في بال % % 23(@)(@@) % ودمع عيني مثل السحب جائدة % % بالدمع جود علاء الدين بالمال % % 24(@)(@@) % ذو الفضل إرثا وكسبا وابنه نسبا % وأكثر الناس إفضالا لأفضال % % 25(@)(@@) % و ذو الجبلة من أصفى جواهرها % % والناس من حمإ فيها وصلصال % % 26(@)(@@) % و ابن الغطاريف أشخاص العلى ورثوا % % عصر السيادة في النآئي وفي الحال % % 27(@)(@@) % المرغمين بما تعطي الخلافة من % % درياق فاروقهم آناف أشكال % % 28(@)(@@) % و الصائنين بأقلام وحد ظبا % % مسارح الملك من اهواء أهوال % % 29(@)(@@) % خلاصة العرب العرباء من فصح % ان قاولوا أو مصابيح وأبطال % % 30(@)(@@) % تسري المطي اليهم أو تفوز بهم % % قدورهم فهي دأبا ذات أرقال % % PageV01P1489 31(@)(@@) % بطحاء مكة غرس المفرقين وفي % % أعلام مصر ظلال الدوح والضال % % 32(@)(@@) % أما علي فقد ضاءت مناسبه % % ونفسه في سراة الصحب والآل % % 33(@)(@@) % قد دبرت مصر والامصار فكرته % % يومي نزال بقطريها وإنزال % % 34(@)(@@) % هو الموفق في معنى رسائلها % % لكنه ابن وزير لا ابن خلال % % 35(@)(@@) % تقول مصر يحامي عن ممالكها % % أقوال هذا من الأطلال أقوى لي % % 36(@)(@@) % بالنصر يعلي سمائي عند مرتقب % % والعدل يخصب أرضي عند اقحالي % % 37(@)(@@) % فليفخر الملك بالكافي الذي انعقدت % % عليه آراء إجماع وإجمال % % 38(@)(@@) % و المودع السر في أحياء مقفله % % وحمده عند رحال وقفال % % 39(@)(@@) % و الباسط الأمن بالأقلام في أمم % % كأنهم من حماها بين أغيال % % 40(@)(@@) % بالمشبع الخمص حيث القاصدون له % % كالطير تتبع ارسالا بارسال % % PageV01P1490 41(@)(@@) % و المنشئ اللفظ تبرا طي أنعمه % % وكل جيد بها أو مسمع حالي % % 42(@)(@@) % نهدي له اللفظ أسمالا فيقبلها % % عواطف الخير من سحاب أذيال % % 43(@)(@@) % يا ساحب الذيل من لفظ وفضل علا % % هل أنت مصغ لما تمليه أسمالي % % 44(@)(@@) % عاثت يد الدهر في يومي وقد بليت % % أضعاف ما بليت بالهم أقوالي % % 45(@)(@@) % و نفر الكلم اللاتي أغازلها % % ما نفر الغيد من شيبي وإقلالي % % 46(@)(@@) % أقول للهم ذي التجديد لي جلد % ملآن يا هم فاطلب منزلا خالي % % 47(@)(@@) % و خلعة لا ارى لي من يروقها % % من حيلة مع أني مثل بطال % % 48(@)(@@) % لرفقتي من جياد الخيل أكملها % % ولي 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms299# جواد ولكن ناقص الدال % % 49(@)(@@) % أمشي على قدمي والحال واقفة % % فيها فهلا يكون المشي في حالي % % 50(@)(@@) % فرغ بعطفك ذهني للثناء فقد % % سارت مثلي فيه غر أمثالي % % PageV01P1491 51(@)(@@) % واسمع مدائح لم يعجز تواصلها % % وربما عجزت عن وقت إيصال % % 52(@)(@@) % إن لم تكن صنع وراق بمصر فقد % % جاء القريض بها من صنع لأ آل % % 53(@)(@@) % يامن تخير لفظا في مدائحه % % يبقى على مر أجيال وأحوال % % 54(@)(@@) % لا زال بابك مخدوما بأربعة % % يمن ونجح ومختار وإقبال % % PageV01P1492 البحر : - 1(@)(@@) % عيد يعود إلى هذا الثنا العال % % بخادمي أفقه يمن وإقبال % % 2(@)(@@) % مطالع بنجوم السعد حالية % على حمى ببدور الفضل محلال % % 3(@)(@@) % وحاجب من هلال العيد يقدمه % % فاهنأ به وبأمثال وأمثال % % 4(@)(@@) % كأن من رمضان النون قد مكثت % % وجدا بمرآك في آفاق شوال % % 5(@)(@@) % يشتاقك الشهر آتيه وذاهبه % % ذا قبل حل وهذا بعد ترحال % % 6(@)(@@) % كلاهما في طلاب القرب مستبق % يتلو الثناء فنعم السابق التالي % % 7(@)(@@) % يا ابن الخلافة جلي كل داجية % فزادك الله من عز وإجلال % % 8(@)(@@) % أما دمشق فقد هزت لمقدمكم % % من بعد عطف دليل عطف مختال % % 9(@)(@@) % أظل رأيك حتى صان ناديها % % ولو تأخر نادي رسم إطلال % % 10(@)(@@) % و عاضد السيف فيها السطر من قلم % % حتى أتاها بإطلاب وإبطال % % PageV01P1493 11(@)(@@) % فالآن عاد اليها خط بهجتها % % مما تعاهدها من خطك العالي % % 12(@)(@@) % غيداء وشحها ظل وخلخلها % % ماء فقد ظهرت في منظر حالي % % 13(@)(@@) % تكاد تسعى لكم بالروح خائضة % بساقها العبل في ماء وخلخال % % 14(@)(@@) % لاغرو إن بدلت من عمها بدلا % وقد أغاث حماها نجل إبدال % % 15(@)(@@) % و ناسب الصالح السلطان دولته % % بصالح يوم أقوال وأفعال % % 16(@)(@@) % كافي الممالك إن نادت براعته % % أجاب نصرتها نصبا على الحال % % 17(@)(@@) % و صاحب السر في مصر ابتدا وله % % في كل مصر مقام الحافظ الكالي % % 18(@)(@@) % و قاسم الرأي من طلاع شامخة % % ومن مشير على الأغراض نزال % % 19(@)(@@) % و معمل الخدع عند الحرب يعجز عن % % عمال ما قل منه ألف بطال % % 20(@)(@@) % و ناشر الدر فينا عند مستمع % نثر الدنانير فينا عند إقلال % % PageV01P1494 21(@)(@@) % اذا تثاقل عسر بات من يده % % تبر يصرف مثقالا بمثقال % % 22(@)(@@) % و ان دعوت به في منطق وندى % % دعوت طائي ألفاظ وإفضال 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms300# % % 23(@)(@@) % دم للعلى يا ابن فضل الله ذا رتب % % عزيزة يا عزيز المصر يا غالي % % 24(@)(@@) % يا بحر علم وجود فاخرن بهما % % فكل آل فخار بعد كالآل % % 25(@)(@@) % يا ملبسي عند احرام الأكابر لي % % زهرا كأن لها حجي وإحلالي % % 26(@)(@@) % شكرا لها خلعة فاءت غمامتها % % عبلي من يد هامي المزن هطال % % 27(@)(@@) % بيضاء بيض مرآها ومخبرها % % عيشي وعين حسودي زاد تسآلي % % 28(@)(@@) % و قلت جاءت من القاضي دليل رضى % % فكاد من غيظه يسعى إلى الوالي % % 29(@)(@@) % ورحت أخطر في ألفافها ألفا % وكنت من دخل في هيئة الدال % % 30(@)(@@) % ماكان يقرب ثوب القطن من قدمي % % فاليوم تسحب بالسنجاب أذيالي % % PageV01P1495 31(@)(@@) % و اليوم تنهض بالأمداح لي فكر % جدائد الحسن لم تخطر على بالي % % 32(@)(@@) % على علي معانيه واكتمها % % نعم الأمالي تلاقت نعم آمالي % % 33(@)(@@) % خذها ابن يحيى لك المحيا منظمة % نظم العقود على أجياد أحقال % % 34(@)(@@) % قدمت فيها الهنا تم المديح وما % % أخليتها بعد من عادات أغزال % % 35(@)(@@) % و قلت للرشاء الغضبان لا غمضت % % عيون قيل على عينيك يا قالي % % 36(@)(@@) % ملكت قلبا بنار الشوق ممتلئا % فما يضرك لو أحسنت يا مال % % 37(@)(@@) % لا تسأل الصب عن سلسال أدمعه % % ملذذا بتعاطيها وسل سالي % % 38(@)(@@) % من فوق خدك خال مثل غالية % % بعت السلو على أمثاله غالي % % 39(@)(@@) % يا مطلق الحسن أحشائي مفلفلة % % على محاسنه دعني وأغلالي % % 40(@)(@@) % و خل بال برجوى الطيف مشتغلا % ولا تبيتن إلا خالي البال % % PageV01P1496 41(@)(@@) % مابين غمضة عين وانتباهتها % % يقلب الهجر من حال إلى حال % % 42(@)(@@) % ان كنت اجريت دمعي في هواك بلا % % جريمة فلقد أوقفت أحوالي % % 43(@)(@@) % أوصنت عن نظري مرج العذار فلي % % هرج ومرج بأشجاني وعذالي % % 44(@)(@@) % أسكنتك القلب ياذا الخال محتكما % فيه فيا تعب المسكون بالخالي % % 45(@)(@@) % ها بهجة الشعر في وصف المليح وفي % % مدح العلاء مدى الأيام تروى لي % % 46(@)(@@) % أما وحق المعالي يا علي لقد % % بدلت إذلال أشعاري بأدلالي % % 47(@)(@@) % لا زلت كالنجم تنويرا لداجية % % زينا لمطلع رشدا لضلال % % 48(@)(@@) % ما خالفتك النجوم الزهر في شبه % إلا بتقصيرها عن مجدك العالي % % PageV01P1497 البحر : - 1(@)(@@) % كل يوم سعادة مستهله % % جملة للوزير في إثر جمله % % 2(@)(@@) % كلما شدت الوزارة إزرا % حمل الجيش في المعاند حمله 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms301# % % 3(@)(@@) % ودعا الخاص ثلث مرقاة والثل % % ث كثير على الذي كان قبله % % 4(@)(@@) % وأضيفت لذا وذا جمل الأنع % % أم يتلو جزيلها الحر جزله % % 5(@)(@@) % من تفاصيلها القماش رياض % مزهرات على الغيوث أدله % % 6(@)(@@) % فصلت قبلها له خلع من % % زخرف الطرز كل يوم مظله % % 7(@)(@@) % عوذتها كما ترى سور القرآ % % ن فضلا يلائم الشكل شكله % % 8(@)(@@) % هكذا هكذا تكون تفاصي % % ل عطايا يعوذها الملك بالله % % 9(@)(@@) % سايرتها خيل العطا مسرجات % % في حلاها ومسرجات الأهله % % 10(@)(@@) % كنسيم الصبا جنائب خطو % كل طرف يقبل البرق نعله % % PageV01P1498 11(@)(@@) % و بغال مثل البروج تحمل % % ن سعودا بعينها مستقله % % 12(@)(@@) % لا كبغل بمصر اذ قلت قدما % فيه أو في بغال صحبي الأذله % % 13(@)(@@) % لي بغل لا يعرف الأكل عندي % % غير أن المياه للشرب سهله % % 14(@)(@@) % ليس في بطنه سوى الماء صرفا % إن بغلي على الحقيقة قله % % 15(@)(@@) % خل هذا واذكر منازل قصر % % فاسمي قد قسم السعد نزله % % 16(@)(@@) % بوزير فخر اسمه وعلاه % % مثلما كان أهلها كن أهله % % 17(@)(@@) % خير دار حلت بها خير دار % % يا سعيد الدارين يا ركن مله % % 18(@)(@@) % و اهتمام قد شاع ذكرا وشكرا % ما روت مثله التواريخ قبله % % 19(@)(@@) % كل ربع سماطه كربيع % % صاح يا مربع الخصيب ووبله % % 20(@)(@@) % ليت عيني كشاجم عاينته % % فتولى فرض الصفات ونفله % % PageV01P1499 21(@)(@@) % و أغان ومادحون سوى العب % % د فلا لبسة ولا بعض أكله % % 22(@)(@@) % يا وزيرا أقلامنا ركع في % % مدح تجتلي محياه قبله % % 23(@)(@@) % يا مشيرا أشار خير السلاط % % ين إلى فضله فضاعف فضله % % 24(@)(@@) % حبذا الملك والوزير دعاه % % فخره فاقتفى تقاه وعدله % % 25(@)(@@) % ما ابن شكر وزير مصر كشكر % % لجواد حفت له الناس بغلة % % 26(@)(@@) % لاولا الفائزين فان بعليا % % ك ولو فسح التمكن سبله % % 27(@)(@@) % لا ولا خصبة ابن حنا كأفرا % % حك بل نصله له بعد نصله % % 28(@)(@@) % فابق وافي الهناء متصل السع % % د علي الحمى سني الأكله % % 29(@)(@@) % و تهنى اقبال سيدة الوق % % ت وأزكى حمى وأيمن حله % % 30(@)(@@) % بالرفا والبنين في خدر بدر % % عن قريب يجلو علسك الأهله % % PageV01P1500 31(@)(@@) % و أحب لي الآن مدحة بنت يوم % % من طروس في حلة بعد حله % % 32(@)(@@) % قيل لي ما اسمها الذي يلسع الض % % د وتجني حلاوة 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms302# قلت نحله % % PageV01P1501 البحر : - 1(@)(@@) % يجور كما شاء الدلال ويعدل % % ويتعب فيه من يلوم ويعذل % % 2(@)(@@) % هو الشمس إشراقا ولكنني أرى % % من الحزم إني عنه لا أتحول % % 3(@)(@@) % بروحي ربيع من عذاريه آخر % % نماه ربيع من أسيليه أول % % 4(@)(@@) % و ثغر يعير الجوهري صحاحه % % ووجه له من رائق الحسن مجمل % % 5(@)(@@) % لناظره الفتان بالسحر آية % % على مثلها دمعي من العين مرسل % % 6(@)(@@) % و من عجب إني بعادل قده % % أجن ودمع العين دوني المسلسل % % 7(@)(@@) % لئن جلبت شجوي كسالى جفونه % % لمثلك يا قلبي عن الصبر أكسل % % 8(@)(@@) % وان غزلت لي من ضنا الجسم حلة % % لما حلت عن أني بها أتغزل % % 9(@)(@@) % نعم في جفون الترك للنفس صبوة % % وللقلب في تلك المضائق مدخل % % 10(@)(@@) % تجرح قلبي تارة بعد تارة % % وتشهد أني عاشق فتعدل % % PageV01P1502 11(@)(@@) % ورب عذول لامني فتركته % % يقول وقلبي في الصبابة ينهل % % 12(@)(@@) % ولو أن عذالي على الحسن إخوتي % % لقلت لهم طوعي لدى الحسن أجمل % % 13(@)(@@) % أقيموا بني أمي صدور مطيكم % % فاني إلى قوم سواكم لأميل % % 14(@)(@@) % إلى كل غصن مال تيها على نقا % % تكاد به أردافه تتهيل % % 15(@)(@@) % و بدر مضى وقتي مضيئا بوصله % % فلا غرو أني بعد بدري مضلل % % 16(@)(@@) % تشرب ترب الأرض ماء مدامعي % % وبين ضلوعي جمرة تتأكل % % 17(@)(@@) % و أهتز للتذكار حتى كأنما % % يعاودني من بارح الذكر أفكل % % 18(@)(@@) % سقى الغيث أوقاتي اذا العيش ممكن % % وخدام أمري بالهنا تتعجل % % 19(@)(@@) % زماني مختار وقصدي منجح % و راحي ريحان وبدري مقبل % % 20(@)(@@) % مدا الليل فيه ناظري متعلل % إلى لثمه من ضمه أتنقل % % PageV01P1503 21(@)(@@) % فاحبب بذاك الحسن وهو مدا الدجى % % بلثمي مختوم وضمي مقفل % % 22(@)(@@) % إلى مثله يهدى تغزل ناظم % % وللصاحب ابن الصاحب المدح يحمل % % 23(@)(@@) % اذا قال معنى في ابن يعقوب ناظم % فإن المعاني باسمه تتكمل % % 24(@)(@@) % اذا عد أهل العلم والحلم والتقى % % وصنع الأيادي فابن يعقوب أول % % 25(@)(@@) % اذا استمسكت منه الأماني بناصر % % فبشرى الاماني انها ليس تخذل % % 26(@)(@@) % اذا عدد المثني مناصب مجده % % فنصبا على التمييز لا يتبدل % % 27(@)(@@) % سري سراة قبل ما اكتمل الصبا % % وشيخ شيوخ قبل ما يتكهل % % 28(@)(@@) % و قاضي قضاة معرب بكماله % % تقى ليس يخفى أو لهى ليس يجهل % % 29(@)(@@) % و كافي كفاة 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms303# ما ابن عباد صائد % % لديه ولا القاضي الملقب أفضل % % 30(@)(@@) % أقام بمغنى الشام صدرا لسره % % وأمداحه في الغرب والشرق ترحل % % PageV01P1504 31(@)(@@) % تنادي الورى نعماه واللفظ والسنا % % ألا فاجتدوا ثم اجتنوا ثم فاجتلوا % % 32(@)(@@) % و لا عيب فيه غير أن له ندى % % يجيب ندا العافين من قبل يسأل % % 33(@)(@@) % مواهب كفيه وألفاظ كتبه % % على اليمن ما بين الورى تترسل % % 34(@)(@@) % و للدرج بعد الدرس منه فوائد % % تفضل في أملاكها وتفصل % % 35(@)(@@) % علوم بآفاق المدارس تنتقى % % وسجع بافنان الدواوين تنقل % % 36(@)(@@) % و نطق به للمنطقي تأدب % ونحو به للفارسي ترجل % % 37(@)(@@) % و خط كما راقت سلاسل عسجد % ونظم كما راق الرحيق المسلسل % % 38(@)(@@) % و رأي على سمت السعود وهمة % % تظل على زهر الكواكب عسل % % 39(@)(@@) % لنعم الفتى دينا ودنيا بجمعنا % % وفي خطبة الدارين نعم المؤهل % % 40(@)(@@) % له الله ما أزكى وأشرف همة % % وأنجح ما يأتي وما يتأمل % % PageV01P1505 41(@)(@@) % درى مع دهري كيف حال تذللي % % فلاقاه حتى عاد وهو مذلل % % 42(@)(@@) % و جلى همومي جامع البر والتقى % % بنعماء من باب الزيادة تدخل % % 43(@)(@@) % و ما هو إلا حين بادر جيشهم % % فقاموا صفوفا للدعا وتبتلوا % % 44(@)(@@) % فنظمتها زهراء والشهب روضة % % على الأفق تجلى والمجرة جدول % % 45(@)(@@) % و طرق الدجى ذو غرة من هلاله % % إلى أن بدا بالفجر وهو محجل % % 46(@)(@@) % فدونكما جهد المحب وعش كما % % تحب لإلف مثلها تتمثل % % 47(@)(@@) % بودي لو أن الجوارح كلها % % لمدحك سمع في الأنام ومقول % % PageV01P1506 البحر : - 1(@)(@@) % فطمت ولآئي ثم أقبلت عاتبا % أفاطم مهلا بعض هذا التدلل % % 2(@)(@@) % بروحي ألفاظ تعرض عتبها % % تعرض أثناء الوشاح المفصل % % 3(@)(@@) % فأحيين ودا كان كالرسم عافيا % بسقط اللوى بين الدخول فحومل % % 4(@)(@@) % تعفى رياح العذر منك رقومه % % لما نسجتها من جنوب وشمأل % % 5(@)(@@) % نعم قوضت منك المودة وانقضت % % فيا عجبا من رحلها المتحمل % % 6(@)(@@) % و نامت على الباكي ولم يدر جفنها % % دراه ولم ينضح بماء فيغسل % % 7(@)(@@) % فداك سهادي في الدجى من مودة % % تؤم الضحى لم تنطبق عن تفصل % % 8(@)(@@) % أمولاي لا تسلك من الظلم والجفا % % بنا بطن خبت ذي قفاف عقنقل % % 9(@)(@@) % و لا تنس مني صحبة تصدع الدجى % % بصبح وما الإصباح منها بأمثل % % 10(@)(@@) % صحبتك لا ألوي على صاحب 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms304# عطا % % يجيد معم في العشيرة مخول % % PageV01P1507 11(@)(@@) % و خافيت حتى من هوى أين مهجتي % % فألهيتها عن ذي تمائم محول % % 12(@)(@@) % و آنسة أعرضت عنها وقد جلت % % علي هضيم الكشح ريا المخلخل % % 13(@)(@@) % و حاولت من إدناء ودك ما نأى % % فأنزلت منه العصم من كل منزل % % 14(@)(@@) % يقلب لي وجدي به سوط سائق % % وإرخاء سرحان وتقريب تتفل % % 15(@)(@@) % فكم خدمة عجلتها ومحبة % % تمتعت من لهو بها غير معجل % % 16(@)(@@) % و كم أسطر مني ومنك كأنها % % عذارى دوار في ملاء مذيل % % 17(@)(@@) % و كم ناصح كذبت دعواه إذ غدت % % علي وآلت حلفة لم تحلل % % 18(@)(@@) % و لحية لاح غاظها ضحكي على % % أثيث كقنو النخلة المتعثكل % % 19(@)(@@) % ترى بعر الآرام في عرصاتها % % وقيعانها فكأنه حب فلفل % % 20(@)(@@) % نزعت سلوي ساحبا عن صبابتي % % على إثرها أذيال مرط مرحل % % PageV01P1508 21(@)(@@) % وقلت خليل ينشد الهم وده % % ألا أيها الليل الطويل ألا انجل % % 22(@)(@@) % و ساتر تقصير المكافين قد أبى % % لدى الستر الا لبسة المتفضل % % 23(@)(@@) % إلى أن تبدى عذره متمطيا % وأردف أعجازا ونآء بكلكل % % 24(@)(@@) % فلاطفته في الحالتين ولم أقل % % فسلي ثيابي من ثيابك تنسل % % 25(@)(@@) % و أقنعني منه المدجاة أعرضت % % بشق وشق عندنا لم يحول % % 26(@)(@@) % معللة ماذا يفيد بها الفتى % % تبايع كفيه بحبل موصل % % 27(@)(@@) % يضن بأسطار كأن يراعها % % أساريع ظبي أو مساويك أسحل % % 28(@)(@@) % و يقرع سمعي من معاريض نظمه % % مداك عروس أو صلابة حنظل % % 29(@)(@@) % و يأبى جلوسي من مراتبه إلى % % كبير أناس في بجاد مزمل % % 30(@)(@@) % كأن دموعي في ثيابي بهجره % % عصارة حناء بشيب مرجل % % PageV01P1509 31(@)(@@) % و لما تجاذبنا العتاب موشعا % نزول اليماني بالعتاب المجمل % % 32(@)(@@) % بنينا الولا الواهي فلم يبق معهدا % ولا أطما الا مشيدا بجندل % % 33(@)(@@) % وعدنا لود يملأ القلب عوده % % بشحم كهداب الدمقس المفتل % % 34(@)(@@) % أعدت صلاح الدين عهد مودة % % بكل مغار الفتل شدت بيذبل % % 35(@)(@@) % فدونك عتبي اللفظ ليس بفاحش % % اذا هي نضته ولا بمعطل % % 36(@)(@@) % و عادات حب هن أشهر فيك من % % قفا نبك من ذكرى حبيب ومنزل % % PageV01P1510 البحر : - 1(@)(@@) % مالي إلى السلوان عنك سبيل % % فدع العذول وما عساه يقول % % 2(@)(@@) % مهما بعثت جوى وفيض مدامع % % فعلى حشاي ومقلتي محمول % % 3(@)(@@) % يا غصن بان قد 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms305# تبين جوره % % إن أنت لم تعطف فكيف تميل % % 4(@)(@@) % كم ذا عليك القلب تلهب ناره % % هذا وذكرك للقلوب خليل % % 5(@)(@@) % أهفو إلى مر النسيم بمهجة % % ترجو شفاء منه وهو عليل % % 6(@)(@@) % و أبث جرح جوارح بيد الأسى % % لكن تجريح الاسى تعديل % % 7(@)(@@) % اما غرام القلب فهو كثير % % عندي ولكن ما السلو جميل % % 8(@)(@@) % مه يا عذول فقد جهلت صبابتي % % وبعيد شبه عالم وجهول % % 9(@)(@@) % أنا من يحول العاشقون وعشقه % % كندى بني ريان ليس يحول % % 10(@)(@@) % المعرقين مناسبا ومكارما % تدري بها الأوصاف كيف تجول % % PageV01P1511 11(@)(@@) % و الواضحين وفي البدور تكلف % % والثابتين وفي الحيا تبديل % % 12(@)(@@) % و التاركين لبيتهم فرعا به % % نشأت لهم بعد الدروس أصول % % 13(@)(@@) % ان يتزن بيت الفخار بذكره % % فبنانه للمكرمات فعول % % 14(@)(@@) % ثاو على حلب ولكن جوده % % ينهل منه على الفرات النيل % % 15(@)(@@) % عرفت مبايعة المحامد عنده % % ووفت فما في بيعها مجهول % % 16(@)(@@) % وزهت برؤيته الديار كأنما % % كل النسيم على الديار قبول % % 17(@)(@@) % و محت غثاثة دهره نعماؤه % % فكأن ذاك غثا وتلك سيول % % 18(@)(@@) % يسعى لمغناه المؤمل مادحا % ويعود وهو ممدح مأمول % % 19(@)(@@) % لو أثر التقبيل في يد ماجد % % لمحا تواجد كفه التقبيل % % 20(@)(@@) % بعض الحديث اذا أعيد لواصف % % الا حديث صفاته مملول % % PageV01P1512 21(@)(@@) % ايضاح رأي قد حوى جمل العلى % % فيه لكل عريكة تسهيل % % 22(@)(@@) % و مواهب مقرونة بمناقب % % فالفضل حيث أقام والتفضيل % % 23(@)(@@) % و يراعة ألفاظها مشمولة % تشفى وجمع فخارها مشمول % % 24(@)(@@) % من خطرة العسال فيها نسبة % لا غرو أن كلامها معسول % % 25(@)(@@) % يا حبذا القلم الذي من دأبه % % حفظ الحمى وثراؤه مبذول % % 26(@)(@@) % يعلي الممالك وهو خافض رأسه % % ويسمن الأحوال وهو هزيل % % 27(@)(@@) % حمدتك يا ابن سعيد عنا أنعم % روض المحامد حولها مطلول % % 28(@)(@@) % طار الحديث بها عليلا محلقا % هذا وعطف جناحه مبلول % % 29(@)(@@) % لا أنس بشرك والزمان مقطب % % ونوال كفك والغمام نحيل % % 30(@)(@@) % كرم أشبب في ثناه لأنه % % أبدا بأنساب العلى موصول % % PageV01P1513 31(@)(@@) % يامن علاه عن الثناء غنية % والصبح أوضح أن يقام دليل % % 32(@)(@@) % خذ من وليك سامعا ومسامحا % جهد الثناء وانه لجليل % % 33(@)(@@) % ان لم يكن شعري ببابك مرقصا % فليهن مدحي انه مقبول % % PageV01P1514 البحر : - 1(@)(@@) % له كل يوم فيك واش وعاذل % وفي قلبه شغل من 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms306# الحب شاغل % % 2(@)(@@) % أخو صبوة أثرى من السهد طرفه % % ولكن له دمع على الخد سائل % % 3(@)(@@) % مقيم ولو جد الرحيل على الولا % % ودان وان شطت عليه المنازل % % 4(@)(@@) % اذا غردت ورق الحمائم في الضحى % % على فنن هاجت عليه البلابل % % 5(@)(@@) % و أغيد في عليا دمشق محله % % وفي لحظه من صنعة السحر بابل % % 6(@)(@@) % و لحظ اذا حفته أصداغ شعره % % فما هو الا سيفه والحمائل % % 7(@)(@@) % تطاولت الأغصان تحكي قوامه % % وعند التناهي يقصر المتطاول % % 8(@)(@@) % و فضلت الجوزا على البدر وجهه % % وقال السهى للشمس لونك حائل % % 9(@)(@@) % و أعيا فصيح الوصف نبت عذاره % % وعير قسا بالفهاهة باقل % % 10(@)(@@) % و لما مشى فوق البسيطة زانها % % وفاخرت الشهب الحصا والجنادل % % PageV01P1515 11(@)(@@) % و ما خفت من جهل العذول وانما % % بغيض الي الجاهل المتعاقل % % 12(@)(@@) % و اني وان كنت الأخير غرامه % % لآت بما لم تستطعه الأوائل % % 13(@)(@@) % تعشقته كالبدر في الطرق مشرقا % % فيا أسفي والبدر زاه وآفل % % 14(@)(@@) % و أسكنته كالضيف وسط جوانحي % % فيا حزني والضيف بالبيت داخل % % 15(@)(@@) % لقد اعقبت قلبي صنوفا كثيرة % % من الشجو أيام اللقاء القلائل % % 16(@)(@@) % سقى الله أيام اللقا سحب راحة % % وزيرية فهي الهوامي الهوامل % % 17(@)(@@) % وزير له في طالب الفضل راحة % % ولكنها قد أتعبتها الفواضل % % 18(@)(@@) % لقد قام عبد الله يدعو إلى الندى % % فأهوت شعوب للرجا وقبائل % % 19(@)(@@) % له الله ما أوفى وأوفر سؤددا % اذا نوهت بالسائدين المحافل % % 20(@)(@@) % تردد في أفق الوزارة شخصه % % كما رددت شهب السماء المنازل % % PageV01P1516 21(@)(@@) % و عطل مغناها اتباعا لزهده % % وإن محلا بان عنه لعاطل % % 22(@)(@@) % ألم تر شباك الوزارة كله % % عيبون تراعي عوده وتحاول % % 23(@)(@@) % سلوا عنه مصرا والشام ففيهما % % شواهد من آثاره ودلائل % % 24(@)(@@) % ألم يرض أرض الواديين بحفل % % من السحب الا أنهن أنامل % % 25(@)(@@) % كلا وادييها عاشق لنزوله % % على أنه في بلدة الأفق نازل % % 26(@)(@@) % تغامز من هذي أصابع نيلها % % وهذي برقراق العيون تغازل % % 27(@)(@@) % و كان عريقا في المناصب بيته % % مكينا اذا ما قيل كاف وكافل % % 28(@)(@@) % فلا واصلا حبلا لمن هو قاطع % ولا قاطعا حبلا لمن هو واصل % % 29(@)(@@) % له قلم كالغصن بالماء مثمر % ولكنه غصن إلى الجود مائل % % 30(@)(@@) % يسمن بيت المال وهو هزيله % % ويفعل أفعال الظبا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms307# وهو هازل % % PageV01P1517 31(@)(@@) % اذا هز في يوم الخطاب فعالم % وان هز في يوم الخطوب فعامل % % 32(@)(@@) % اذا قلت ياللصاحب ابتدرت إلى % % نداك معال كالنجوم موائل % % 33(@)(@@) % فقل فيه ما شئت المقال مهنئا % فانك في ظل السيادة قايل % % 34(@)(@@) % هنيئا لمولانا الوزير إيابه % % ومقفله في الذكر والأجر حاصل % % 35(@)(@@) % و لا برحت أوقاتنا ببقائه % % مواصلة أبكارها والأصائل % % 36(@)(@@) % يكف الأذى عن حالنا جود كفه % % ويروي لنا عنه عطاء وواصل % % PageV01P1518 البحر : - 1(@)(@@) % ما مثل قلبي ساليا عن مثله % % خد قرأت عليه سورة نمله % % 2(@)(@@) % وجلست من شغف أنزه ناظري % % في ماء رونقه وخضرة شكله % % 3(@)(@@) % أهوى العذار مبقلا ويسرني % % لقب العذول على هواه بعذله % % 4(@)(@@) % ليس العذول وان تحاذق ذهنه % % من خل بقلك يا عذار فخله % % 5(@)(@@) % ماذا على العذال من عقل الفتى % % في هذه الأشواق أو في جهله % % 6(@)(@@) % من حكمة الله الخفية أن ترى % % كل البرية راضيا عن عقله % % 7(@)(@@) % هذا ببعض اللهو مشغول وذا % % كل المحامد والعلى من شغله % % 8(@)(@@) % كجمال دين الله إن له هوى % % بجميله وهوى سواه بحمله % % 9(@)(@@) % ذو العزم ما حكت الثريا راحه % % الا لتعلق في العلاء بحبله % % 10(@)(@@) % و السعي ما حكت المجرة مسلكا % الا لتحسب في السرى من سبله % % PageV01P1519 11(@)(@@) % ذاك الذي منعته من صرف العلى % % والمجد معرفة تناط بعدله % % 12(@)(@@) % و اعتاض عن سلف الاولى قصاده % % بذلا يقوم ببعضه عن كله % % 13(@)(@@) % لولا ابن محمود الممدح ما روى % % ذو النظم عن حزن النوال وسهله % % 14(@)(@@) % ندب يرى فرض التكرم قاصرا % % ان لم تقم جدوى يديه بنفله % % 15(@)(@@) % ما السهم أنفذ في الرمية من شبا % % قلم ينوب لنا منابة نصله % % 16(@)(@@) % يا حبذا في الطرس فرع سامق % تجري أحاديث الندى عن أصله % % 17(@)(@@) % عجبا لذاك الفرع أتلف ما يرى % % وحمى العواصم ساكن في ظله % % 18(@)(@@) % يزجي سحائبه بنان مؤمل % % في الخافقين نوافح من سجله % % 19(@)(@@) % لوأن مثل ربيعة في وائل % لم يخل موطئ ذرة من فضله % % 20(@)(@@) % يامن سريت إلى ذرا أبوابه % % سير الغريب إلى منازل أهله % % PageV01P1520 21(@)(@@) % شكرا لبرك لي على طول المدى % % ان كان يقضي الشكر حق أقله % % PageV01P1521 البحر : - 1(@)(@@) % قسما بغصن قوامه المتمايل % % إني لتعجبني عليه بلابلي % % 2(@)(@@) % ويطيب 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms308# أفواه العواذل ذكره % % حتى أهم بلثم ثغرالعاذل % % 3(@)(@@) % رشأ سرفت مدامعي في حبه % % يا للقتيل بكى لحب القاتل % % 4(@)(@@) % ما ضر عامل قده لو كان ذا % % عطف فليس يضيع أجر العامل % % 5(@)(@@) % نزلت على جفنيه فينا آية % % نزلت على الملكين قبل ببابل % % 6(@)(@@) % و تناهت الأهوا إليه كما انتهى % % معنى السيادة للمليك الكامل % % 7(@)(@@) % ملك رأيت الشهب ثم رأيته % % فوجدته أعيى على المتطاول % % 8(@)(@@) % و قصدت عذب البحر ثم قصدته % % فوجدته أدنى إلى المتناول % % 9(@)(@@) % نقلت شمائله صفات جدوده % % نقل الرياض عن الغمام الهاطل % % 10(@)(@@) % و تحدثت في الروع ألسن بيضه % % بين المقاصد بالحديث الفاصل % % PageV01P1522 11(@)(@@) % و سقى البنان يراعه حتى ارتوى % % فلذلك يهزأ بالوشيح الدابل % % 12(@)(@@) % يا ابن الملوك الشائدين حمى الهدى % % والرافعين قبابه بعوامل % % 13(@)(@@) % و الحاصدين عداته بقواضب % % صارت لطول ضرابها كمناجل % % 14(@)(@@) % أيديهم في الأرض نبع زلالها % % ومحط أرجلهم أمان زلازل % % 15(@)(@@) % من مبلغ الاهلين عني أنني % % في الشام فزت بفوق ظن الآمل % % 16(@)(@@) % و أخذت من ريب الزمان أمانه % % وقبضت حق مآربي بالكامل % % 17(@)(@@) % لا جور في دهر وفيه ممدح % وشحت منابته بنبت العادل % % PageV01P1523 البحر : - 1(@)(@@) % سري بشبيه البدر آل هلال % % وهان على أهل المليحة حالي % % 2(@)(@@) % خبي وجهها عني وأخلي ربعها % % فآها على وجه ذكرت وخال % % 3(@)(@@) % وأخفت لي الأسقام جسما كأنه % % خلال الأسى والبين عود خلال % % 4(@)(@@) % فما ضر هند لو طرقت خيامها % % على أنني بالسقم طيف خيال % % 5(@)(@@) % هي الشمس بعدا في المكان وبهجة % ولكنها في الفرع ذات ظلال % % 6(@)(@@) % أهيم بذكرى شعرها وعهودها % % لقد همت من شمس الضحى بحبال % % 7(@)(@@) % ولم أدر هل تسطو علي لحاظها % % بسود جفون أم ببيض نصال % % 8(@)(@@) % حرام على جفني المنام وحسبها % % اذا رضيت أن السهاد حلالي % % 9(@)(@@) % و أغيد قد خط العذار بخده % % حروفا نماها الحسن لابن هلال % % 10(@)(@@) % لعمرك ماخد الحبيب معذر % % و لكن بمسود النواظر جالي % % PageV01P1524 11(@)(@@) % سمت نحوه الأنظار حتى كأنها % % بناريه من هنا وهن صوالي % % 12(@)(@@) % أرى شعرات الشيب تؤذن بالردى % % و ينذرني منها طلوع هلال % % 13(@)(@@) % فما بال رأسي كلما ضاء شيبه % % تجدد في ذكر الحبيب ضلالي % % 14(@)(@@) % دع الرمح يسند عن قدود أحبتي % % فإن قدود المالكين عوالي % % 15(@)(@@) % و 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms309# دعني والأيام ألقى صروفها % % بصبر على أيدي الحوادث عالي % % 16(@)(@@) % أرى لابن ريان اعتلاء سيادة % % تخلص حظ الشعر بعد مطال % % 17(@)(@@) % رئيس إلى علياه تسري مدائح % مواصلة ليست بذات كلال % % 18(@)(@@) % طربت إلى ضوء الجبين وإنما % % طربت لضوء البارق المتلالي % % 19(@)(@@) % و قالت وقد زادت جمالا بنعته % % حمى الله من عين الزمان جمالي % % 20(@)(@@) % أخو العلم والنعمى يرجى ويختشى % % ليوم فعال أو ليوم مقال % % PageV01P1525 21(@)(@@) % له بركات تلوهن مكارم % فيالمعال أيدت بمعالي % % 22(@)(@@) % بكفيه يستسقى الحيا ودعائه % % فتهمي بماء حالتاه ومال % % 23(@)(@@) % و يندى وقد أندى الحياء جبينه % % فلم ندر من فينا طلوب نوال % % 24(@)(@@) % و لا عيب فيه غير سبق هباته % % فما يتهنى مفصح بسؤال % % 25(@)(@@) % له القلم الماضي الشباة كأنما % % يحادثه من فكره بصقال % % 26(@)(@@) % اذا وسع الأطراس حكت سطورها % % كواعب في الأوراق تحت حجال % % 27(@)(@@) % و ان جهز السمر الذوابل للوغى % % فقل في قصير شد أزر طوال % % 28(@)(@@) % براحة من هبت نوافح ذكره % % فأرخص في الآفاق نشر غوال % % 29(@)(@@) % حلت للورى جدوى يديه فأصبحت % % دعاة الرجا من حوله كنمال % % 30(@)(@@) % ووالى ندى قد سن سنة حاتم % فأهلا بسني الندى المتوالي % % PageV01P1526 31(@)(@@) % من القوم فرسان البلاغة والوغى % % على أنهم لله أي رجال % % 32(@)(@@) % يميتون أياما من المحل بالندى % % ويحيون من طول السجود ليالي % % 33(@)(@@) % أأزكى الورى نفسا وأكرم أسرة % وأرفعهم عن مشبه ومثال % % 34(@)(@@) % بقيت مدى الدنيا إلى الفضل سابقا % وكل امرئ فيها بمدحك تالي % % PageV01P1527 البحر : - 1(@)(@@) % أسائله يوم النوى كيف حاله % % أعيذك مما قل منه احتماله % % 2(@)(@@) % تقضت ليالي الوصل الا ادكارها % % وغاب حبيب القلب إلآ خياله % % 3(@)(@@) % بروحي ناء كنت أشكو ملاله % % فمن لي بأن يدنو ويبقى ملاله % % 4(@)(@@) % من الغيد إن تنسبه فهو كما ترى % % أخوا وجنتيه الشمس والمسك خاله % % 5(@)(@@) % عدا البدر أن يحكي جميع صفاته % % ولكن حكاها نوره وانتقاله % % 6(@)(@@) % وراح القنا من نيل عطفيه باهتا % فكان حقيقا حره واعتقاله % % 7(@)(@@) % خذ الحذر من لحظ له وذوائب % فما هو الا سحره وحباله % % 8(@)(@@) % و إياكما في الحب من لوم مبعد % وقولا له في الوصل كيف احتياله % % 9(@)(@@) % جعلت وفاء العهد زينة شيمتي % % كما زان أبناء الزمان جماله % % 10(@)(@@) % أخو العلم والنعماء يهدي 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms310# رشاده % % ويجدي على داعي الرجاء نواله % % PageV01P1528 11(@)(@@) % جميل المحيا يملأ العين بهجة % % وأجمل من ذاك المحيا فعاله % % 12(@)(@@) % محا الجدب عن وجه البرايا بأنمل % % تريك حيا الوسمي كيف انهماله % % 13(@)(@@) % ألم تره والله يبسط عمره % % يمر على الوادي فتثنى رماله % % 14(@)(@@) % رئيس بيد القائلين سكونه % % ويفضل عن يمنى الغمام شماله % % 15(@)(@@) % له قلم ان قال روى سجله % % مسامعنا أو جال روت سجاله % % 16(@)(@@) % حرام على الحالين سحر بديعه % % إذا جال في سلب العقول حلاله % % 17(@)(@@) % يجول به في الحرب والسلم ماجد % % مؤيدة أقواله وفعاله % % 18(@)(@@) % من المالكي رق المديح بنائل % % كأن بحار الأرض في الجود آله % % 19(@)(@@) % يزيد اتضاعا كلما زاد رفعة % وكم صاعد أخنى عليه اختياله % % 20(@)(@@) % ألا أيها الباغي منالا لشأوه % % اليك فليس الأمر مما تناله % % PageV01P1529 21(@)(@@) % له الله من غالي السجية عذبها % % كما انهل من فرع السحاب زلاله % % 22(@)(@@) % نزلت بمغناه فلم أخش حادثا % وكيف وهذا جاهه لي وماله % % 23(@)(@@) % أمولاي ان الحال مد رجاؤه % % اليك وأن القصد آل مآله % % 24(@)(@@) % دعاك لتمييز الوسائل طالب % فلا غرو أن يسمو بريك حاله % % PageV01P1530 البحر : - 1(@)(@@) % يا سائلي بدمشق عن أحوالي % % قف واستمع عن سيرة البطال % % 2(@)(@@) % ودع استماع تغزلي وتعشقي % % ماذا زمان العشق والأغزال % % 3(@)(@@) % طول النهار لباب ذا من باب ذا % % أسعى لعمر أبيك سعي ظلال % % 4(@)(@@) % لاحظ لي في ذاك الا أنه % % قد خف من طول المسير طحالي % % 5(@)(@@) % أسعى على شغل وأترك خلوة % فأعود لا علمي ولا أعمالي % % 6(@)(@@) % واذا تغير مورد وقصدت لي % % صحبا وجدت الصحب مثل الآل % % 7(@)(@@) % هذا الزمان ليس فيه خادم % تقضى الأمور به سوى مثقالي % % 8(@)(@@) % أترى الزمان يعينني بولاية % أحمي بها وجهي عن التسآل % % 9(@)(@@) % زحل يقارن حاجتي وقد انحنى % % ظهري من الهم انحناء الدال % % 10(@)(@@) % ما ضر إسماعيل غوث ذوي الرجا % % لو صانني عن هذه الأحوال % % PageV01P1531 11(@)(@@) % بشفاعة مقبولة تذر الغنى % % خبرا لمبتدإ الرجا في الحال % % 12(@)(@@) % أولست غرس ندى يديه فكيف لا % % يحيي الغراس بوابل هطال % % 13(@)(@@) % يا سيدا عمت صنائعه الورى % % بعوائد المعروف والافضال % % 14(@)(@@) % ما بعد ديمتك الروية ديمة % % يشكو لها ظمأ ذوو الإقلال % % 15(@)(@@) % هذي شكاية مستغيث موجع % أنهى قضيته ورأيك عالي % % PageV01P1532 البحر : - 1(@)(@@) % ما 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms311# للعذول على هواك ومالي % % أفدي بروحي من أحب ومالي % % 2(@)(@@) % يا مجريا دمعي وموقف لوعتي يا من اذا سألوه عن بدر الدجى والمسك قال أخي الشقيق وخالي % % من جسمي المضنى على اطلالسقط بيت ص % % 3(@)(@@) % رفقا بمن كحل الجفاء جفونه % % فغدا الكرى منها على أميال % % 4(@)(@@) % صب اذا ذكر العقيق وأهله % % نثر الدموع على هواه لآلي % % 5(@)(@@) % يروي الأمالي عن قلاك طويلة % % فالى متى يروي أمالي القالي % % 6(@)(@@) % وتقاتل العذال فيك وربما % % قوى جفاك مطامع العذال % % 7(@)(@@) % هيهات مانزلوا به الادعا % % بجبينك المشروق يا لهلال % % 8(@)(@@) % الطرف في ذاك الجبين منعم % والقلب من ذاك التجنب صالي % % 9(@)(@@) % ضدان مثل ندى ابن ريان الفتى % % لنزيله والبأس يوم نزال % % 10(@)(@@) % يهمي بصاب للعدو اذا طغى % % واذا الولي دعا همت بزلال % % PageV01P1533 11(@)(@@) % جاور سليمان المنيع جواره % % تأمن به من جنة الاهوال % % 12(@)(@@) % المعتلي رتبا يشيب لعجزه % % عن قدرها الاعلى عذار هلال % % 13(@)(@@) % والساتر الدنيا بذيل مكارم % % أحيت أواخرها فعال أوالي % % 14(@)(@@) % والطالب الاخرى بعزم للكرى % % يفني ويحيى بالسجود ليالي % % 15(@)(@@) % لا تتخذ بدلا لديه وعدة % % في هذه الدنيا من الابدال % % 16(@)(@@) % واقصد جنابي جاهه ونواله % % إن خفت حالي عسرة ونكال % % 17(@)(@@) % واقرأ على ريب الزمان براءة % % وعلى رجائك سورة الأنفال % % 18(@)(@@) % الاصل ريان فلا عجب اذا % % ما الفرع فآء على الورى بظلال % % 19(@)(@@) % لو لم تصح يمناه حي على الندى % % ما فاز ظام للندى ببلال % % 20(@)(@@) % هذا هو الشرف الذي بأقله % % ضرب القديم غرائب الامثال % % PageV01P1534 21(@)(@@) % رأي إلى طرق الرشاد مسدد % وسجية جبلت على الاجمال % % 22(@)(@@) % وفضائل وضحت وحلت رتبة % % فهي الكواكب في سنا ومنال % % 23(@)(@@) % ويراعة تذر الركائبي والعدى % % ما بين نزل مكارم ونزال % % 24(@)(@@) % من معطف المران فيه نسبة % % ولها جنى يعزى إلى العسال % % 25(@)(@@) % يا ماجدا أحيي مآثر قومه % % بمحامد أرخص نشر غوالي % % 26(@)(@@) % لله همتك الممكن رفعها % % ماذا جزمت بها من الافعال % % 27(@)(@@) % وهباتك اللاتي تعجل رفدها % % ويجيب طالبها بغير سؤال % % 28(@)(@@) % لاعيب في نعماك إلا أنها % % مع عدلها ظلامة للمال % % 29(@)(@@) % تجنى عليه وانما تجنى به % % ثمر المحامد والثناء الغالي % % PageV01P1535 البحر : - 1(@)(@@) % من مبلغ علماء الاعصر الأول % % ان التفاصيل قد جمعن في الجمل % % 2(@)(@@) % تجمعت في فتى العليا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms312# ولا عجب % ان يجمع الله كل الناس في رجل % % 3(@)(@@) % قاضي القضاة الذي سارت مآثره % % بغير مثل يوازيها سوى المثل % % 4(@)(@@) % جمال ذي الأرض لازالت محاسنه % % عن أفقها وجمال الدين والدول % % 5(@)(@@) % من أنشر العلم من بعد الهمود ومن % % ضمت يداه المعالي وهو كالهمل % % 6(@)(@@) % من استقامت به الاوقات واعتدلت % % للناس قبل نزول الشمس في الحمل % % 7(@)(@@) % من لو أعارت حلاه المشتري شرفا % لم تعترضه عوادي النحس من زحل % % 8(@)(@@) % أما دمشق فقد فازت بما ارتقبت % % من طارف السعد أو من تالد الامل % % 9(@)(@@) % فليهنها أن راعي حكمها يقظ % بالعلم حكم لا بالسعي والحيل % % 10(@)(@@) % ليت ابن ادريس لاقى ابن الدروس بها % % لكان يملأ قلب الأم بالجذل % % PageV01P1536 11(@)(@@) % ليت القضاة الأولى عادوا لما فقدوا % % مواقع القلم المرعي بالمقل % % 12(@)(@@) % ماأوضح الحكم فيها عن إمام هدى % % بالعلم متزر بالحلم مشتمل % % 13(@)(@@) % لين الخلائق صعب البأس مانعه % % كأنه الجد بين السهل والجبل % % 14(@)(@@) % أغر لو كان منه في الهلال سنا % لم يستهل بسعد غير متصل % % 15(@)(@@) % و ظاهري الايادي غير خافية % وليس عن شيم العليا بمعتزل % % 16(@)(@@) % موكل بنقيات الأمور له % % إلى العلى عزم لا وان ولا وكل % % 17(@)(@@) % تزين العلم في عينيه حملها % % كل الدجى وحماها النوم في الكلل % % 18(@)(@@) % لم يكس في حلل العلياء يوسعها % % حتى لها عن قدود البيض في الحلل % % 19(@)(@@) % له صفات بها الأقلام راكعة % كأنها من قبيل الصحف في قبل % % 20(@)(@@) % سل علمه عن خفيات محجبة % وعن إحاطة أوصاف فلا تسل % % PageV01P1537 21(@)(@@) % مكارم لو رأى الطائي مسرحها % % لقال لا ناقتي فيها ولا جمل % % 22(@)(@@) % و منطق لو أراد الفخر غايته % % لبات بالري يشكو بارح الغلل % % 23(@)(@@) % و سؤدد يتدانى من تواضعه % % ولو ترقت اليه الشهب لم تصل % % 24(@)(@@) % و فصل قول يلذ الخصم موقعه % حتى يود قضآء غير منفصل % % 25(@)(@@) % قالت يراعته والفكر يرشدها % % اصالة الرأي صانتني عن الخطل % % 26(@)(@@) % و أنشدت وبأرض الشام مركزها % % أعلى الممالك ما يبنى على القلل % % 27(@)(@@) % و عطلت كتبا في الدين مارقة % % فكل درع كتاب قد من قبل % % 28(@)(@@) % قد اختمت بيضة الاسلام والتحقت % % بعش أقلامه في الحادث الجلل % % 29(@)(@@) % كم سعادة علوم قد تقدمهم % % تقدمك السعي 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms313# بالهادي على الكفل % % 30(@)(@@) % اذا قصصت على راو له خبرا % حلى من الذوق أو حلى من العطل % % PageV01P1538 31(@)(@@) % اذا شدا صوت عافيه ومادحه % % غدا وحاشاه مثل الشارب الثمل % % 32(@)(@@) % يا مالي البيت بيت الشعر من مدح % % وكان أقفر بالوعسآء من طلل % % 33(@)(@@) % يا من رأى جوده العافون منسرحا % فوجهوا العيس تطوي الرمل بالرمل % % 34(@)(@@) % ثنى امتداحك شعري عن عوائده % % فما بدأت بتشبيب ولا غزل % % 35(@)(@@) % هذا على أن لي عينا مسهدة % % للحب مخلوقة الانسان من عجل % % 36(@)(@@) % أستلمح البرق غربي الديار متى % % تقدح أشعته الأحشاء تشتعل % % 37(@)(@@) % و أستصح بمعتل الصبا جسدي % % وربما صحت الأجسام بالعلل % % 38(@)(@@) % و أذكر العيش مصقولا سوالفه % % اذ مصر داري وأحبابي بها خولي % % 39(@)(@@) % هيهات ذكرك أحلى في فمي وكلا % % كفيك لا ذوا اللمي أشهى إلى قبلي % % 40(@)(@@) % تشاغل الناس في لذات دهرهم % وأنت بالفضل والأفضال في شغل % % PageV01P1539 البحر : - 1(@)(@@) % كل حي قاض عليه زوال % % والى هذه السبيل مآله % % 2(@)(@@) % يا جلالا عن الزمان تقضى % % عز رب قضى وجل جلاله % % 3(@)(@@) % ما اقتضى حظنا بقاءك فينا % % واحدا تشمل الأنام ظلاله % % 4(@)(@@) % هاديا للندى وللعلم ترجى % % كل يوم أقواله وفعاله % % 5(@)(@@) % أين ذاك الغمام يدنو إلى النا % % س ندى كفه ويعلو مناله % % 6(@)(@@) % أين أحكامه وأين علاه % % أين أقلامه وأين نواله % % 7(@)(@@) % قف بقبر الامام يا نادب الفض % % ل وخل البكاء تهمي سجاله % % 8(@)(@@) % و انثر الدمع حول مثواه نثرا % مثل ما يثنثر الكلام ارتجاله % % 9(@)(@@) % ودع الشعر كان للشعر وقت % % بنداه وقد تغير حاله % % 10(@)(@@) % و سلا الصب واستراح المعنى % % لا صباباته ولا عذاله % % PageV01P1540 11(@)(@@) % أقفرت ساحة العلى فبيوت الش % % عر من بعد بعده أطلاله % % 12(@)(@@) % آه للطالبين علما ورفدا % بعد ما غاض عزمه واحتفاله % % 13(@)(@@) % طالب العلم فيه للنحو نوح % لا تسل عنه كيف أصبح حاله % % 14(@)(@@) % طالب الجود مات من كان في الج % % ود تباري يمنى يديه شماله % % 15(@)(@@) % طالب العلم مطلقا خل عنه % % قيد العلم حزنه وكلاله % % 16(@)(@@) % مات من كان ملتقى كل قصد % والى الله قصده واتكاله % % 17(@)(@@) % عجبا من سريره يوم أودى % % كيفما أورقت ورقت ظلاله % % 18(@)(@@) % عجبا من زمانه حين ولى % % كيفما سيرت ودكت جباله % % 19(@)(@@) % صعدت روحه لأمثالها 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms314# الزه % % ر وفي الأرض أين أين أمثاله % % 20(@)(@@) % فتهاوت كواكب الأفق تسعى % % وانحنى يبدأ السلام هلاله % % PageV01P1541 21(@)(@@) % و عدمنا نحن الندى ولقينا % % يتقاضى وفد الرجال جلاله % % 22(@)(@@) % ياله من مصاب دين ودنيا % % طال فينا اشتغاله واشتعاله % % 23(@)(@@) % شاب كالشيخ طفله وبكا الأش % % ياخ فيه كأنهم أطفاله % % 24(@)(@@) % ونعت مصر والشام إماما % طرزت مجد ذا وذاك خلاله % % 25(@)(@@) % كم مقام كما سمعت ملوكي % % ولديه تصرفت أفعاله % % 26(@)(@@) % كم بيمناه قصة قد اجيب % % وسؤول بها أجيب سؤاله % % 27(@)(@@) % كم قريب دعا به وبعيد % % وهو هام يد الندى هطاله % % 28(@)(@@) % كم أتتني مع الركاب لهاه % ووفت لي مع الزمان خصاله % % 29(@)(@@) % لو بقدر الأسى بكيت لسالت % % مهجة كم وفت لها أفضاله % % 30(@)(@@) % في سبيل العلى غمام تولى % % بعد ما أخصب الورى إقباله % % PageV01P1542 31(@)(@@) % هكذا عادة الزمان بنوه % % بسط ظل كما ترى وزواله % % 32(@)(@@) % و دفين على بقايا دفين % % مثل ما قال من سرت أمثاله % % 33(@)(@@) % كم إلى كم هذا التغافل منا % % عن يقين الردى وهذا التباله % % 34(@)(@@) % جاد يا قاضي القضاة ضريحا % كنت فيه غيث يسر انهماله % % 35(@)(@@) % و جزى الله جود كفك عنا % % وتولاك جوده ونواله % % 36(@)(@@) % لك منا نشر النسيم ثناء % % ولنا بالأسى عليك اعتلاله % % PageV01P1543 البحر : - 1(@)(@@) % بلغا القاصدين أن الليالي % % قبضت جملة العلى بالكمال % % 2(@)(@@) % وقفا في مدارس النقل والعق % % ل ونوحا معي على الأطلال % % 3(@)(@@) % سائلاها عسى يجيب صداها % % أين ولى مجيب أهل السؤال % % 4(@)(@@) % أين ولى بحر العلوم وأبقى % % بين أجفاننا الدموع لآلي % % 5(@)(@@) % أين ذاك الذهن الذي قد ورثنا % % عنه مافي الحشا من الأشعال % % 6(@)(@@) % أين ذاك البحث الذي يحرس الح % % فل على غير أهبة واحتفال % % 7(@)(@@) % أين ملك الأقلام يوم انتصار % كعوالي الرماح يوم نزال % % 8(@)(@@) % ينقل الناس عن حديث هداها % % طرق العلم عن متون العوالي % % 9(@)(@@) % و تفيد الجنى من اللفظ حلوا % حين كانت نوعا من العسال % % 10(@)(@@) % أين تلك الأوصاف تنفح طيبا % رخصت عنه فنون الغوالي % % PageV01P1544 11(@)(@@) % يالها من رزية في حشا الاس % % لام من وقعها كحد النصال % % 12(@)(@@) % يالها وقعة على الرمل أبقت % % للبرايا لواعجا كالجبال % % 13(@)(@@) % نقصت بهجة الحياة فلا ين % % كر تأثير للنقص بعد الكمال % % 14(@)(@@) % و انطوى مبسم العلوم وأغضت % % مقلة 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms315# البحث دونها والجدال % % 15(@)(@@) % و كحلنا الجفون بالسهد حتى % % بات منها الكرى على أميال % % 16(@)(@@) % أيها الراحل الذي عطلت من % % بعده القاصدون شد الرحال % % 17(@)(@@) % كنت غوث الوجود حقا ولكن % % ليس في الناس عنك من إبدال % % 18(@)(@@) % كنت دون الأنام عونا على خف % % ض حياة لنا بتمييز حال % % 19(@)(@@) % فليمت من يشا ويذهب من شآ % % ء فإنا بعدها لا نبالي % % 20(@)(@@) % كم ليمناك عندنا من أياد % ليس فيها لواصف من شمال % % PageV01P1545 21(@)(@@) % كم لها من فتوة وفتاو % قاضيات مآرب السوآل % % 22(@)(@@) % هي مثل الأطواق عند عفاة % وهي للملحدين كالأغلال % % 23(@)(@@) % غاب علم التفسير عنا وهمت % % كتب الفقه فيك بالأعوال % % 24(@)(@@) % و دموع الحديث سلسلها الحز % % ن وأنكى في القلب جرح النصال % % 25(@)(@@) % و أرى النحو واجما ليس منه % % قلب زيد وقلب عمر و بخال % % 26(@)(@@) % قصرت في الكلام مرتبة الأس % % ماء واعتل سائر الأفعال % % 27(@)(@@) % ليت شعري لمن أعزي على الخط % % ب وحال الأنام طرا كحالي % % 28(@)(@@) % أترى هل علمت يا ابن علي % أن دمعي من الأسى متوالي % % 29(@)(@@) % أنت في جنة النعيم مقيم % % وفؤادي عليك بالنار صالي % % 30(@)(@@) % أنت جار للشافعي وقلبي % % مالكي الأهواء والأهوال % % PageV01P1546 31(@)(@@) % يا ضلالي من بعد ذاك المحيا % % وافتقاري من بعد ذاك النوال % % 32(@)(@@) % قربا مربط الكآبة مني % % نفحت حرب لوعتي من جمال % % 33(@)(@@) % لو نسيت الفضائل ما كن % % ت بناس صنائع الأفضال % % 34(@)(@@) % كيف أنسى ذاك الندى وهو عندي % % مستجد أمام عيني وبالي % % 35(@)(@@) % كيف أنشيء من المقال بديعا % زال من كان عارفا بمقالي % % 36(@)(@@) % زال عني ذاك الثنا فقضي قل % % بي فرض الاحزان عند الزوال % % 37(@)(@@) % و اعتزلت الورى وليس عجيبا % بعد ما مات قامع الاعتزال % % 38(@)(@@) % أي قلب لم يرم بعد سراه % % بفنون الأوجاع والأوجال % % 39(@)(@@) % أي دنيا يصفو لها أمل المر % % ء وهذي مصارع الآمال % % 40(@)(@@) % أي خلق من المنية يحمي % % وهي تسري إليه مسرى الخيال % % PageV01P1547 41(@)(@@) % أي تاج وللأهلة في الأف % % ق قسي ترمي الورى بنبال % % 42(@)(@@) % جاد مثواك يا محمد غيث % % باسم البرق مستهل الغزال % % 43(@)(@@) % و سلام على الفضائل في لح % % دك والفضل والندى والمعالي % % PageV01P1548 البحر : - 1(@)(@@) % برغمي أن غاض الندى بكماله % % فلم يبق الا زورة من خياله 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms316# % % 2(@)(@@) % والا دموع من جفون كأنها % % ترد على مثواه فيض نواله % % 3(@)(@@) % أسفت لبدر بان عنه محمد % % فبان بمعنى حسنه وجماله % % 4(@)(@@) % وولى كما ولى السحاب مودعا % وفي كل روض نفحة من سجاله % % 5(@)(@@) % وزال وقد أبقى جواهر بحره % % ومات وقد أحيى مناقب آله % % 6(@)(@@) % ألا في سبيل الله مصرع ماجد % % تزيلت العلياء مثل زواله % % 7(@)(@@) % فقدناه فياض المكارم واللهى % % يشف ضياء المجد بين خلاله % % 8(@)(@@) % لئن قصرت أيدي الحوادث بعده % % لعهدي بها مغلولة بنكاله % % 9(@)(@@) % بروحي وصاح الصفات كأنما % % طبعن دراري الحسن بعد خصاله % % 10(@)(@@) % أما والذي أنشأ أياديه والحيا % % لقد فقد الظمآن صفو زلاله % % PageV01P1549 11(@)(@@) % وقد زال من أفق الأثير عن الورى % % سنا كوكب تسهو السها لمناله % % 12(@)(@@) % فمن للعلى يهدي سبيل رشادها % % ومن للرجا يمحو ظلام ضلاله % % 13(@)(@@) % و من ليراع قد أفاض مداده % % وجر من الأطراس ذيل خياله % % 14(@)(@@) % و من لخطوط غاب بدر كمالها % % فهلا فداه الخط بابن هلاله % % 15(@)(@@) % و من لمعان في المهارق تجتلى % % بحلي وجوه الخود بين حجاله % % 16(@)(@@) % إلى الله اشكو يوم فقدك انه % % رمى كل عقل ناشط بعقاله % % 17(@)(@@) % و قوس من ثقل الرزية أظهرا % فلا غرو أن أصمى الحشا بنباله % % 18(@)(@@) % بكاك فقير رافع لك قصة % % نصبت على التمييز كسرة حاله % % 19(@)(@@) % و ممتدح لهفان يسألك الغنى % % أجرت معاني مدحه بسؤاله % % 20(@)(@@) % و مطلب كان ارتحالك قبله % % فعطلت الأيام شد رحاله % % PageV01P1550 21(@)(@@) % و عصر حلا جملت مرآه برهة % % وخلفته ينعي أتم رجاله % % 22(@)(@@) % كأنك لم تنهض باعباء دولة % % تكلف سعي الدهر فوق احتماله % % 23(@)(@@) % كأنك لم تحمل يراعا تمرها % % وتعضدها في سلمه وصياله % % 24(@)(@@) % و من عجب مقدار فرع يراعة % % وقد وسع الدنيا بفيء نواله % % 25(@)(@@) % كأنك لم تبسط بنان مؤمل % % يمين غوادي المزن دون شماله % % 26(@)(@@) % و ما هي الاهمة لك أنفذت % % وصاة رسول الله عند بلاله % % 27(@)(@@) % فأنفقت ما أحرزت بالبذل ذخره % % وما ذخر مال المرء غير ابتذاله % % 28(@)(@@) % عزاء العلى عن راحل بيد الردى % % وكل مقيم مؤذن بارتحاله % % 29(@)(@@) % و ما الدهر الاخيط فجر وليله % % يجران من شخص الفتى بانتقاله % % 30(@)(@@) % و اني وان احسنت سلوة فاقد % لمضمر شجو مثخن بنصاله % % PageV01P1551 31(@)(@@) % أينفذ عني الحزن بعد 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms317# محمد % % وما استنفذت كفي نوافل ماله % % 32(@)(@@) % أأنسى له في كل جدب غمائما % تحث على رغم الحيا ومطاله % % 33(@)(@@) % أأنسى له في كل درج قلائدا % منظمة من رفده ومقاله % % 34(@)(@@) % سأبكيه ما لاح الظلام بظلمه % % وابكيه ما ناخ الحمام بضاله % % 35(@)(@@) % و ما أنا الا بالجميل مطوق % % أولى أسى لا كنت أن لم أواله % % 36(@)(@@) % صدحت له بالمدح عند لقائه % % وهذا أوان النوح عند زواله % % PageV01P1552 البحر : - 1(@)(@@) % فتحت لي بابا من الود ما % % عهدته يرضى بإهمالك % % 2(@)(@@) % فحبذاك اللغز من فاتح % % ودك لي من بعد إغفالك % % 3(@)(@@) % ألغزته في واقف خاضع % % كالعبد في تصريف أفعالك % % 4(@)(@@) % مافيه من عيب ويا طالما % % قد رده في حكمه مالك % % 5(@)(@@) % لكن لي في وسطه غالبا % فرع أعاذ الله من ذلك % % 6(@)(@@) % لا الشعر والتوشيح أدرى ومن % % تصريعك استملي وأمثالك % % 7(@)(@@) % تخشى اذا أبصرته مرتجى % % فاعجب له في كل أحوالك % % 8(@)(@@) % أعجبني والله مع نظمه % % رضوانك المعهود يا مالك % % PageV01P1553 البحر : - 1(@)(@@) % ودعت بابك لا وداع القالي % % يا من لمدحي في علاه أمالي % % 2(@)(@@) % يا من سرت مدحي له فتزاحمت % % في الخافقين قصائري وطوالي % % 3(@)(@@) % لي سيرة المشغول في نعمائه % % إن لم تكن لي سيرة البطال % % 4(@)(@@) % يا مانحي غرر المواهب سبقا % % من قبل ما سبقت له آمالي % % 5(@)(@@) % يا خافضا بجواره عيشي فقد % % نضبت على التمييز صورة حالي % % 6(@)(@@) % يا من كبار بني شاموافضله % % فتطفلوا أن بلغت أطفالي % % 7(@)(@@) % دم يا ابن فضل الله في حلي الثنا % % والأجر كم زفت عليه معالي % % 8(@)(@@) % هذا نداك قلآئد الأعناق أو % % هذا ثناك خواتم الأعمال % % 9(@)(@@) % إن سرت لا ألقى مثالك في الورى % % قسما ولا يلقى ثناك مثالي % % PageV01P1554 البحر : - 1(@)(@@) % مرحبا بالحيا لكل جديب % لا عدمنا نواله وظلاله % % 2(@)(@@) % ملك الجود والثنا والمعالي % % والسجيات كلها والاصالة % % 3(@)(@@) % رقمت حلة الرياض فخلنا % % أن روضا قد استعار خلاله % % 4(@)(@@) % وابتغى الأفق للعلى فحسبنا % % أنه يفعل الجواد هلاله % % 5(@)(@@) % هو أزكى الأنام لا شك فيه % % يوم فخر وخيرهم لا محاله % % 6(@)(@@) % جاء من صيده السعيد كبدر % % ما رأى الطرف في السناء مثاله % % 7(@)(@@) % كم غزال رمى فلو أمكن الشم % % س من الخوف ما تسمت غزاله % % 8(@)(@@) % ولعمري لو استجار به 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms318# الوح % % ش ثنى بعد مااستقلت نباله % % 9(@)(@@) % أيد الله ملكه ووقاه % % وحمى سربه وصان جلاله % % PageV01P1555 البحر : - 1(@)(@@) % أمولانا فلان الين رفقا % على ضعفي وسلمي واعتزالي % % 2(@)(@@) % رجوت على الليالي منك عونا % بحقك لا تكن عون الليالي % % 3(@)(@@) % أما والله لم يخطر بفكري % % حديث الغض منك ولا ببالي % % 4(@)(@@) % وكيف وأنت سباق البرايا % % وحسبي أنني لثناك تالي % % 5(@)(@@) % وأنك نعم من أعددت صحبا % اذا ما الصحب أضحوا مثل آل % % 6(@)(@@) % وبين خصالنا نسب وشيج % % من الآداب رقام الخلال % % 7(@)(@@) % ولو عطف الوشاة على ضعيف % % إذا شهدوا بشكري واحتفالي % % 8(@)(@@) % رعاك الله راجع في رأيا % ولا تدحض حقوق فتى موالي % % 9(@)(@@) % وهبني كنت قد أخطأت فامنن % % بحلم إنه سبب المعالي % % 10(@)(@@) % وغمض إن أساء الخل عينا % تفد سنن الطريق ولا تبالي % % PageV01P1556 11(@)(@@) % نعم واستر ولو كالشمس ذنبا % فغايتنا الجميع إلى الزوال % % PageV01P1557 البحر : - 1(@)(@@) % معاطف أو مراشف دبل % % أحلى لممتارها من العسل % % 2(@)(@@) % يافوز من مات في وقائعها % % ما بين تلك العسالة الدبل % % 3(@)(@@) % ويا هنا من يضم مهجته % % على ولاء في ابن الامام علي % % 4(@)(@@) % قاضي القضاة الذي مواهبه % % قد خلقت للرجاء من عجل % % 5(@)(@@) % لا عيب في جوده سوى نعم % تحرم بالسبق لذة الأمل % % 6(@)(@@) % كم وقعة لي مع الزمان وقد % % دفعت عني كوقعة الجمل % % 7(@)(@@) % فسر بايضاح معربات سنا % % وعد لبذل الصلات بالجمل % % PageV01P1558 البحر : - 1(@)(@@) % سرت لحسنك في العشاق أمثال % % ومالحسنك يا معشوق أمثال % % 2(@)(@@) % حوالة الصب قد أعيت وحيلته % % على لقاك فقل لي كيف أحتال % % 3(@)(@@) % تقسمت فيك يا جيد الغزال وفي % % مدح الدوادار أمداح وأغزال % % 4(@)(@@) % رسم بباب الحمى العزي مكتتب % % قابل حماه وقل عز وإقبال % % 5(@)(@@) % قد علم الله في أقلام راحته % وبالسيوف فأرزاق وآجال % % 6(@)(@@) % يا سائد الملك بالآراء يعلمها % % لا جيش يسعى مساعيها ولا مال % % 7(@)(@@) % هنئت فوزك دنيا ثم آخرة % % فقد زكت لك في الدارين أعمال % % PageV01P1559 البحر : - 1(@)(@@) % ونشيطة الأعطاف إلا أنها % % بجفونها لثياب سقمي تغزل % % 2(@)(@@) % بيتان من قلبي ونظمي ذالها % % متغزل سكنت وذا متغزل % % 3(@)(@@) % ودموع قيس قيس دمعي بعدها % % كالبحر عند ندى محمد جدول % % 4(@)(@@) % ملك سما ونما وجاد على الورى % % فليجتنوا وليجتدوا وليجتلوا % % 5(@)(@@) % يا أيها الملك البسيطة أبحرا % أهل الندى 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms319# وهو البسيط الأول % % 6(@)(@@) % أهلا بمقدمك السعيد وحبذا % % عيش على رغم الأعادي مقبل % % 7(@)(@@) % طلع الهلال ويمن وجهك للورى % % يتفاضلان وأنت أنت الافضل % % PageV01P1560 البحر : - 1(@)(@@) % قالت وفي صدر نار القلب منزلها % % يا ليت أنك لم تكرم به نزلي % % 2(@)(@@) % مليحة إن تكن في حسنها صنما % فيا عذولي لا بوركت من هبلي % % 3(@)(@@) % فيها وفي مدح أوفى السائدين علا % تقسم الشعر في مدح وفي غزل % % 4(@)(@@) % دم للعلى يا ابن فضل الله مرتقيا % أفق المعالي وقد أربى على الأول % % 5(@)(@@) % يا من عرفت به كسب الالوف ومن % % تمامها أنها جاءت ولم أسل % % 6(@)(@@) % لم يبق جودك لي شيئا أؤمله % % تركتني أصحب الدنيا بلا أمل % % 7(@)(@@) % كل الكفاة ذوي الآراء ماثلة % % مثل السيوف ولكن ذو الفقار علي % % PageV01P1561 البحر : - 1(@)(@@) % مبلل أصداغ أثارت بلابلي % % وجرت هوى عشاقها بالسلاسل % % 2(@)(@@) % ومشمش بستان ثرياه أشرقت % % وأين الثريا من يد المتناول % % 3(@)(@@) % بلى أن تصافح بالرجا يد أحمد % تصافح ثرياها يد المتطاول % % 4(@)(@@) % كريم شكت بمنى الغيوث شماله % % فيالك من غيث كريم الشمائل % % 5(@)(@@) % مقسمة جدواه بين فواضل % لمداحه تهدي وبين فضائل % % 6(@)(@@) % تعلمهم نظم الثنا مبدعاته % % فيا لعقول حثها بعقائل % % 7(@)(@@) % على السبعة السيارة امتاز فضله % % فلا زال ذا طول عليها وطائل % % PageV01P1562 البحر : - 1(@)(@@) % يا آل أيوب سقتكم % سحب الرضا تحت الضرائح وبلها % % 2(@)(@@) % لهفي على أوقات ملك أسبغت % % نعماكم فوق البرية ظلها % % 3(@)(@@) % ما كان أقوى في العداة أشدها % % بأسا و أعلى في النجوم محلها % % 4(@)(@@) % وفدى لكم متسرع أنحى على % % أموالكم فأزالها وأذلها % % 5(@)(@@) % كم أنشدت من بعدها أيديكم % % ما كان أكثرها لنا وأقلها % % 6(@)(@@) % ناديت ساحتكم وقلت لصاحبي % % ما كان أسرع للمنادى فضلها % % 7(@)(@@) % فدنا وقال لعلها معذورة % % من بعد أهليها فقلت لعلها % % PageV01P1563 البحر : - 1(@)(@@) % أترى يقضي بكم أملي % % قبل ما يقضي بكم أجلي % % 2(@)(@@) % أيها الغياب بعد جفا % % ما على هجرين من قبل % % 3(@)(@@) % في سبيل الله دمع فتى % مسرع الاجفان من همل % % 4(@)(@@) % لا تلم إنسان مقلته % % خلق الانسان من عجل % % PageV01P1564 البحر : - 1(@)(@@) % خذ العدس المشتهى مأكلا % % وكن يا أخا الجود نعم الأكيل % % 2(@)(@@) % فلو لم تكن عندي المعتلى % % لما جدت منه بهذا الجليل % % 3(@)(@@) % وأقسم لولاك يا سيدي % % عدمت 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms320# الصديق وحق الخليل % % PageV01P1565 البحر : - 1(@)(@@) % بعين الله يسري ثم شكري % % لبرك وابتهاجي وابتهالي % % 2(@)(@@) % قبضت من الكمال نداك صفوا % بريئا من سؤال أو مطال % % 3(@)(@@) % فيا لله من عادات بر % أتتني بالتمام وبالكمال % % PageV01P1566 البحر : - 1(@)(@@) % لقد كنت أرجو في صباي وصبوتي % % مغازلة الغر القوافي التي تحلو % % 2(@)(@@) % فلما انقضى عصر الشباب وشارفت % % منية مثلي ما لها في الورى مثل % % 3(@)(@@) % فجاءت بدرج عند ما أنا دارج % % وجاءت بوصل حيث لا ينفع الوصل % % PageV01P1567 البحر : - 1(@)(@@) % رب صديق كلغز سيدنا % % بخالص الود ثم ينتقل % % 2(@)(@@) % كدرهم وجهه يشف عن النق % % د خلاصا وقلبه زغل % % PageV01P1568 البحر : - 1(@)(@@) % ألا يا حسنها فرجية من % % فراجي الفخر كانت م الطوال % % 2(@)(@@) % رأى الخياط صافية شمولا % صفاء بياضها فأدارها لي % % PageV01P1569 البحر : - 1(@)(@@) % تركت للفظ الحاجبية رونقا % له لا لالفتاظ الأوائل تقبل % % 2(@)(@@) % اذا كتب النحو استمالت عيوننا % % أبينا وقلنا الحاجبية أول % % PageV01P1570 البحر : - 1(@)(@@) % أمولاي ما إسم جلي إذا % % تعوض عن حرفه الأول % % 2(@)(@@) % لك الوصف من شخصه سالما % فان قلعت عينه فهو لي % % PageV01P1571 البحر : - 1(@)(@@) % فقدت أخلائي الذين سألتهم % % دوام الوفا إن الوفا قليل % % 2(@)(@@) % وإن افتقادي واحدا بعد واحد % % دليل على أن لا يدوم خليل % % PageV01P1572 البحر : - 1(@)(@@) % هنئت ما أوتيته من دولة % % حملتك في العينين من إجلالها % % 2(@)(@@) % في مقلة الأجفان أنت فقل لنا % % أنت ابن مقلتها أم ابن هلالها % % PageV01P1573 البحر : - 1(@)(@@) % إن الإمامين مد الله ظلهما % % تواردا في الندى والعلم والعمل % % 2(@)(@@) % كلاهما قد علا في العالمين فلا % % عدمت من ذا وذا جاه الإمام علي % % PageV01P1574 البحر : - 1(@)(@@) % بأبي نافرا كثير الدلال % % إن هذا النفار شأن الغزال % % 2(@)(@@) % حبذا مقلة لست أدري % % أبهدب تصول أم بنبال % % 3(@)(@@) % صنفت شجونا بغزال جفن % % فقرأنا مصنفا للغزالي % % 4(@)(@@) % وهوينا حلو القوام فنادى % % لا عجيب حلاوة العسال % % 5(@)(@@) % ما رأى الناس قبله قيد رمح % أطلع الشمس في ظلام الليالي % % 6(@)(@@) % تلك منه ذوائب لست أنف % % ك بآفاق جنحها في ضلال % % 7(@)(@@) % عشقته مثلي وخافته خوفي % % فاستجارت لديه بالأذيال % % 8(@)(@@) % من معيني على الهوى زاد حتى % % أهملته نصائح العذال % % 9(@)(@@) % في جمال الحبيب مت شجونا % وبروحي أفدي تراب الجمال % % PageV01P1575 البحر : - 1(@)(@@) % نقب على ودي الجميل % % وقنع الضب بالقليل % % 2(@)(@@) % كليم قلبي عليك 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms321# يكوي % % بنار حبيك يا خليلي % % 3(@)(@@) % يا مصر أما بشمس حسن % % أو شمس علم لي استميلي % % 4(@)(@@) % شمس هدى لا تزال منه % % تظهر في طالع جميل % % 5(@)(@@) % بسيط بحر الندى مديد % % كامل بحر الثنا طويل % % 6(@)(@@) % رجاي في بره سمين % % كالفيل لا كالرجا النحيل % % 7(@)(@@) % يضمن لي رفده المهنى % % يا لك من ضامن كفيل % % PageV01P1576 البحر : - 1(@)(@@) % بروحي ممنوع اللقا غير أنني % % أواصل بالتنجيم والفكر شكله % % 2(@)(@@) % و أقسم من خديه والثغر بالضحى % % وبالفجر ما أبصرت في العصر مثله % % 3(@)(@@) % و ما أبصرت عيناي من وارث العلى % % كناصر دين الله يبسط فضله % % 4(@)(@@) % أميرا اذا قابلت وصفا ونسبة % % ترى الفضل مأثور الصفات ونجله % % 5(@)(@@) % ترى عمري المنتمى عدويه % % ففيه المعالي تتبع الفرع أصله % % 6(@)(@@) % أمولاي إن أهلتني لعناية % فما زلت بالمعروف والشكر أهله % % 7(@)(@@) % فديناك من أصل ببطحاء مكة % % وفرعا على الأقطار قد مد ظله % % PageV01P1577 البحر : - 1(@)(@@) % بيت امتداحي ثم بيت ممدحي % % يا بيت عاتكة الذي أتغزل % % 2(@)(@@) % هذا وذاك وذا أحاول صده % % حذر العدى وبه الفؤاد موكل % % 3(@)(@@) % و يميل عني من يصد وأنني % % قسما اليه مع الصدود لأميل % % 4(@)(@@) % فليهنه الشهر الأصم عرفته % % عند المدائح مصغيا يتهلل % % 5(@)(@@) % بالرغم أن يصغى لشكوى اليوم من % % حظ تقول به الهموم وتفعل % % 6(@)(@@) % و يردني عن باب ساداتي امرؤ % % مفتاح بابهم لمثلي أمثل % % 7(@)(@@) % و أبيك يا ابن علي ان تشوقي % % من تحت قلبي المستهام ومن عل % % PageV01P1578 البحر : - 1(@)(@@) % ليهن بدر الحسن في حلة % % تعذيب قلبي وهو في حل % % 2(@)(@@) % و ليهن سمعي عند حلو اسمه % % ما كرر العذال من عذلي % % 3(@)(@@) % و ليهن شهر الصوم أتقى الورى % % وليبق ما شاء بلا مثل % % 4(@)(@@) % إمام أعلام الهدى والندى % % قاضي قضاة الفضل والفصل % % 5(@)(@@) % أقسم في الأنفال من بره % % وكثرة الطلاب كالنمل % % 6(@)(@@) % في العلم والنسبة ما مثله % % في رده الفرع إلى الأصل % % PageV01P1579 البحر : - 1(@)(@@) % خليلي والشواق تروي حديثها % % دموع الأسى من مرسل ومسلسل % % 2(@)(@@) % على نازل بالقلب مرتحل به % % قفا نبك من ذكرى حبيب ومنزل % % 3(@)(@@) % و الا انظرا من خاله فوق خده % % إلى خير نار عندها خير مصطل % % 4(@)(@@) % سبكت بها ودي فصح كأنه % % سجايا بني السبكي للمتأمل % % 5(@)(@@) % أولئك ساداتي 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms322# الذين هم هم % غياث المرجى عصمة المتوسل % % 6(@)(@@) % لقاضي قضاة المسلمين عليها % % ندى ويد كالبارق المتهلل % % 7(@)(@@) % امام لنا من اسمه وسماته % % سيول من الأرزاق تنحط من عل % % PageV01P1580 البحر : - 1(@)(@@) % فتانة الصب تجلى في حماه فيا % % لها غزالة أفق في منازله % % 2(@)(@@) % حتى اذا سحبت مثنى ذوائبها % % فيا لها من غزال في حبائله % % 3(@)(@@) % من لحظها وتثني غصن قامتها % % لا تسألوا من فؤادي عن بلابله % % 4(@)(@@) % إن أقبل الوجه أشكو جور ناظره % % أو أقبل القد أشكو جور عادله % % PageV01P1581 البحر : - 1(@)(@@) % قاضي القضاة عليها وتقيها % % مالي على خلق سواك معول % % 2(@)(@@) % سبق اعتناؤك في نوالك لي فما % % أنفك في هذا وذا أتأمل % % 3(@)(@@) % فمن الحوالة لي ربيع آخر % % ومن المواهب لي ربيع أول % % 4(@)(@@) % لازلت ذا فضل يطل على الورى % % وعلى الكواكب من علي ومن عل % PageV01P1582 البحر : - 1(@)(@@) % يا أيها العالم الفرد الوزير ومن % % أرجو نداه اذا جافاني الأمل % % 2(@)(@@) % و عاقني عن نداك الصاحبي وعن % % رسمي من العيد وحل ليس يحتمل % % 3(@)(@@) % و فاتني صحن حلو والشواء فلا % % شمس لمطلع آمالي ولا حمل % % 4(@)(@@) % عش للمفصل من حمد يقال اذا % % بدا على مثل هذا تنفق الجمل % % PageV01P1583 البحر : - 1(@)(@@) % يا اماما صفاته % % ذات فضل مكمل % % 2(@)(@@) % دم جمالا لمخبر % % وحياة لمجتلي % % 3(@)(@@) % يرجم الفقر من ندا % % ك برفد معجل % % 4(@)(@@) % حجر من دراهم % % حطه السيل من عل % % PageV01P1584 البحر : - 1(@)(@@) % هنئت بالنعم الجميلة % % يا صاحب النعم الجزيله % % 2(@)(@@) % ست تخبرنا النقا % % أنها ست جليله % % 3(@)(@@) % و كذاك ألف مثلها % % فاهنأ بعقباها الكفيلة % % 4(@)(@@) % و ديار ضدك ذمته % % وسيوف حيلته كليله % % PageV01P1585 البحر : - 1(@)(@@) % و أزهر وضاح الصفات عليها % % مدحت به المدح الذي أنا قائله % % 2(@)(@@) % يقولون ماذا من أياديه ترتضي % % فقلت التي تضى لمثلي نوافله % % 3(@)(@@) % أقدم اسمي مصدرا في مديحه % % ويفعل صوب الغيث ما هو فاعله % % 4(@)(@@) % و ما البر الا مانوته هباته % % لعاف ولكن اهنأ البر عاجله % % PageV01P1586 البحر : - 1(@)(@@) % أسعد الدين والدنيا بقطف % % على من كنت تغمر بالنوال % % 2(@)(@@) % رجوت على الليالي منك عونا % بعيشك لا تكن غوث الليالي % % 3(@)(@@) % و لا تسعف ولا تسعف بأمر % ولكن لا علي إذا ولا لي % % PageV01P1587 البحر : - 1(@)(@@) % يا واحدا في المعالي % % تهوى المعالي جماله 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms323# % % 2(@)(@@) % دم في مراتب فضل % % عضدت فيها الأصاله % % 3(@)(@@) % فلم تقم بكلال % % ولم ترث عن كلاله % % PageV01P1588 البحر : - 1(@)(@@) % بقيت ابن فضل الله مفردا % كشهرك أو شعري الذي لك قائله % % 2(@)(@@) % فلو أنني ضمنت بيتا لمبدع % % قديما لقال الناس إني قائله % % 3(@)(@@) % أقول لفقري مرحبا لتيقني % % بأن عليا بالمكارم قاتله % % PageV01P1589 البحر : - 1(@)(@@) % يا أيها الملك المربى برؤيته % % عن كل فضل سمعناه من الأول % % 2(@)(@@) % كم جملة وصلت لي من نداك وكم % % تفيصلة ألبستني أجمل الحلل % % 3(@)(@@) % لقد غدت فكر الأمداح جائزة % % بين التفاصيل من نعماك والجمل % % PageV01P1590 البحر : - 1(@)(@@) % شكرا تقي الدين للمنن التي % % رفعت على حامي حماك ظلالها % % 2(@)(@@) % لله أنت فقد وصلت إلى مدى % % في الفضل أعيي السائدين مثالها % % 3(@)(@@) % وغدوت وجها مثل خالك في الورى % % يا حبذا وجه الأنام وخالها % % PageV01P1591 البحر : - 1(@)(@@) % يا سيد الوزراء لا مستثنيا % في فضله أحدا ولا إفضاله % % 2(@)(@@) % فقد كنت ترحم قبلها حال امريء % % متغرب تدري حقيقة حاله % % 3(@)(@@) % حاشا لشمسك أن ترد مؤملا % عن أفقها يشكو انقطاع حباله % % PageV01P1592 البحر : - 1(@)(@@) % ماذا أقول اليوم ان أكثر الع % % الم عن جودك تسآلي % % 2(@)(@@) % وقيل هل أجدى المديح الذي % % حبرته في مجده العالي % % 3(@)(@@) % ان قلت لا كذبني الناس أو % % قلت نعم كذبني حالي % % PageV01P1593 البحر : - 1(@)(@@) % يا اماما قال المقلد والعا % % لم فيه بواجب التفضيل % % 2(@)(@@) % ما على عاشق يقول على حك % % م التداوي بالضم والتقبيل % % 3(@)(@@) % لا كمن تنتحي بمعشوقه النح % % و فمن فاعل ومن مفعول % % PageV01P1594 البحر : - 1(@)(@@) % مولاى كم من شذرة نظمت في % % معنى وليس لها اليك وصول % % 2(@)(@@) % قسما ببيتك في المعالي إنني % % أولى ببيت سواي حيث يقول % % 3(@)(@@) % يا بدر حسادي عليك كثيرة % % والمسعدون على هواك قليل % % PageV01P1595 البحر : - 1(@)(@@) % الحمد لله اذ زمان % حلا لنا بالهنا جلاله % % 2(@)(@@) % بكافل للرجا وزير % يرضع أبناءنا نواله % % 3(@)(@@) % فحبذا بره رضاعا % وحبذا رأيه كفاله % % PageV01P1596 البحر : - 1(@)(@@) % سقيا للحدك يا علي فانه % % لحد الرئاسة والثنآء العالي % % 2(@)(@@) % مالي ونظم القول بعدك في الورى % % ذهب المقال فلات حين مقالي % % 3(@)(@@) % لا زال قلبي رافضي تصبر % أسفا عليك ومدمعي متوالي % % PageV01P1597 البحر : - 1(@)(@@) % شكوت وبالشكوى إلى غير راحم % تعذر مني للمراد حصول % % 2(@)(@@) % وصولات قوم بالكثير تقسمت % % لديكم ومالي لي 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms324# وصول % % 3(@)(@@) % خضبت مشيبي بالدموع فما به % % ولكن بقلبي للهموم نصول % % PageV01P1598 البحر : - 1(@)(@@) % يا سيدي يا صلاح الدين لا صلحت % % ان أنس برك أفكاري ولا حالي % % 2(@)(@@) % يا من جفاني فلفظي بعد جفوته % % وجيد قصدي لا حلو ولا حالي % % 3(@)(@@) % ان لم يعدلي فلا صاد الحروف ولا % % لام معانقة فيها ولا حا لي % % PageV01P1599 البحر : - 1(@)(@@) % خذ من عبيدك مقتضى نياتها % % في الحمد واعذر مقتضى أقوالها % % 2(@)(@@) % قسما لو اسطاعت اليك جسومهم % % بعثت دروج المدح من أوصالها % % PageV01P1600 البحر : - 1(@)(@@) % تأملت من بعد الصبا خال وجنة % لغيداء لم أطمع بعود وصالها % % 2(@)(@@) % وكنت أخا سعدي فأصبحت عمها % % فهيهات لي جد بتقبيل خالها % % PageV01P1601 البحر : - 1(@)(@@) % ولي رقيب اذا مالحب واصلني % % قرينه قلت ليت الحيب لم يصل % % 2(@)(@@) % يقول تنقيل مرآه وسرعته % % سبحان من خلق الانسان من عجل % % PageV01P1602 البحر : - 1(@)(@@) % يا حبذا يومي بوادي جلق % وفرجتي مع الغزال الحالي % % 2(@)(@@) % من أول الجبهة قد قبلته % % مرتشفا لآخر الخلخال % % PageV01P1603 البحر : - 1(@)(@@) % آها لحاذق ذهن % يقول في العشق من ولي % % 2(@)(@@) % قال العذار لحدقي % % ما أنت من خل بقل ي % % PageV01P1604 البحر : - 1(@)(@@) % تجلدت كتب التاريخ ثم شكت % % من خجلة خير تاريخ لخير ولي % % 2(@)(@@) % تكاد إن نظرت هذي المحاسن أن % % تموت في جلدها من شدة الخجل % % PageV01P1605 البحر : - 1(@)(@@) % سبحان من وكل بي مشفعا % تاجا على رأسي عطاه الجميل % % 2(@)(@@) % وكلته في كل ما أرتجي % % وحسبي الله ونعم الوكيل % % PageV01P1606 البحر : - 1(@)(@@) % سعيت في حب هيفا % % تحلو وتكوي طفيله % % 2(@)(@@) % وقيل عين لها اسما % فقلت ستي بخيله % % PageV01P1607 البحر : - 1(@)(@@) % وغادة أنحل جسمي خصرها % % وكان جسمي قبل مرآها نحيل % % 2(@)(@@) % وطولت همل بطول شعرها % % فقلت ذا يا شعرها هم طويل % % PageV01P1608 البحر : - 1(@)(@@) % أفدي مليحا أسودا فاح شذا % % مسك لنا فقاعه وشكله % % 2(@)(@@) % كأنه نادي على حليته % % فقال فقاعي مسك كله % % PageV01P1609 البحر : - 1(@)(@@) % أقول لعثمان الأديب وقد صبا % % لأرداف من يهواه بعد اعتزالها % % 2(@)(@@) % وقد ساقها من بعد ما قد تغيرت % % وقد هزلت حتى بدا من هزالها % % PageV01P1610 البحر : - 1(@)(@@) % إمام دين الله سمعا لمن % % أبعدتموه وهو باقي الوله % % 2(@)(@@) % لو سرت ميلا عنك لم تتخذ % % عيني سوى إحسانكم مكحله % % PageV01P1611 البحر : - 1(@)(@@) % من أدب النفس أن يوقر مو % % لانا بتدبيره 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms325# الجليل علا % % 2(@)(@@) % وإنما المفترون قد حفظوا % % تلجي الضرورات في الامور إلى % % PageV01P1612 البحر : - 1(@)(@@) % يا عاتبين ولا والله أذكرهم % % إلا بخير وإن مالوا علي ولي % % 2(@)(@@) % شويت يا مهجتي إن كنت عاتبهم % % وإن وجدت لسانا قائلا فقلي % % PageV01P1613 البحر : - 1(@)(@@) % عمامتي كبرتها غالطا % فقيل لي باردة جزله % % 2(@)(@@) % كبيرة فتاضت على جبهة % قلت نعم مع أنها سهله % % PageV01P1614 البحر : - 1(@)(@@) % تصدق برفد على السائلي % % ن ما كان يمكن رفد جميل % % 2(@)(@@) % ولا تأمنن عروض الزمان % % فان الزمان فعول فعول % % PageV01P1615 البحر : - 1(@)(@@) % عرج على قبل الكمال وقل له % % سحبت عليك السحب من أذيالها % % 2(@)(@@) % قسما لقد نقصت وأعوزت العلى % % يا شوقها لتمامها وكمالها % % PageV01P1616 البحر : - 1(@)(@@) % واحربا من هوى رشيق % % معذر كالقضيب مائل % % 2(@)(@@) % عذاره لا يغيث دمعي % % وسائل لا يجيب سائل % % PageV01P1617 البحر : - 1(@)(@@) % من كان هفواته متنصلا % في باب عزكم فما اتنصل % % 2(@)(@@) % أظهرت اذ أذنبت فضل حلومكم % % فأنا امرؤ بذنوبه يتوسل % % PageV01P1618 البحر : - 1(@)(@@) % يارب إن ابني وشعري كما % % تراهما في حالة حائله % % 2(@)(@@) % الشعر محتاج إلى قابل % % والإبن محتاج إلى قابله % % PageV01P1619 البحر : - 1(@)(@@) % يقول بيت المال لما رأى % % تدبير مولانا الجلي الجليل % % 2(@)(@@) % الله أعطاني وكيلا رضى % فحسبي الله ونعم الوكيل % % PageV01P1620 البحر : - 1(@)(@@) % يا رب ليل بته متنعما % % برشيقة تغني بردف مثقل % % 2(@)(@@) % إيري بجانب كسها في جحرها % % عرف المحل فبات دون المنزل % % PageV01P1621 البحر : - 1(@)(@@) % يا عاذلي لست مثلي في هوى وجوى % % فخل بالله عن لومي وعن عذلي % % 2(@)(@@) % أضحى لريان ردف قد علا وربا % % يا حيبذا جبل الريان من جبل % % PageV01P1622 البحر : - 1(@)(@@) % لا تخف عيلة ولا تخش فقرا % % يا كثير المحاسن المختاله % % 2(@)(@@) % لك عين وقامة كل يوم % % تلك غزالة وذي فتاله % % PageV01P1623 البحر : - 1(@)(@@) % قاضي القضاة جمعت للزهد الندى % % فعدوت في الحالين تبعث بالولي % % 2(@)(@@) % تأتي هباتك كالسيول لنا ولا % % عجب لسيل حين يأتي من عل ي % % PageV01P1624 البحر : - 1(@)(@@) % صدق الذي قد سار في أمثاله % % بيت بديع النظم في أقواله % % 2(@)(@@) % واذا امرؤ أسدى اليك صنيعة % % من جاهه فكأنها من ماله % % PageV01P1625 البحر : - 1(@)(@@) % يا كاتب الخاص ويا شاعرا % أصبح بالآداب يختال % % 2(@)(@@) % حوالتي قد أعجزت حيلتي % % فانهض عسى ينجح محتال % % PageV01P1626 البحر : - 1(@)(@@) % أمين العلى والعلم دعوة ناشيء % بيتك تلقى تلقى حيثما 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms326# كان فضله % % 2(@)(@@) % أبوك بأرض الشام أصل إقامتي % % فأكرم مقاما كان أصلك أصله % % PageV01P1627 البحر : - 1(@)(@@) % حلوا بعقد الحسن أجيادهم % % وحاولوا صبري حتى استحال % % 2(@)(@@) % فآه من عاطل صبر مضى % % والحمد لله على كل حال % % 3(@)(@@) % أيا حسنا قد هوى شائبا % لقد بتما والهوى مشكل % % 4(@)(@@) % فلو بتما عند قدريكما % % لبت وأعلا كما الاسفل % % 5(@)(@@) % بروحي خليلا لم أجد مع صدوده % % إلى القلب عنه سلوة تتخلل % % 6(@)(@@) % ويعلم بأسي من جميل وفائه % % فما ضره بالقول لو يتجمل % % 7(@)(@@) % أتاني علي الباسي بشعره % % فيا لك من شعر ثقيل مطول % % 8(@)(@@) % مكر مفر مدبر مقبل معا % كجلمود صخر حطه السيل من عل ي % % 9(@)(@@) % يداوي أسى العشاق من نحو أرضكم % % نسيم صبا أضحى عليه قبول % % 10(@)(@@) % بروحي من ذاك النسيم اذا سرى % % طبيبا يداوي الناس وهو عليل % % PageV01P1628 11(@)(@@) % مبقل الخد قالوا % % فقلت ما ذاك يسلي % % 12(@)(@@) % هذا الزمرد حقا % ماذي حوائج بقلي % % 13(@)(@@) % لا أرى لي في الشام بعد مادعى % % أحبتي وسادتي الرحيل % % 14(@)(@@) % وكيف أختار المقام في حمى % لا صاحب فيه ولا خليل % % 15(@)(@@) % سألت الحلال فأعطى وقد % % سألناك يا من عليه يدل % % 16(@)(@@) % وأنت في الدولة ابن المعز % فلا تقصرن عن ابن الاجل % % 17(@)(@@) % شهاب الدين يا غوث الموالي % % ومن حاز الثنا والفضل كله % % 18(@)(@@) % أغث قوما إلى البطيخ أمسوا % % قياما يسألون عن الأهلة % % 19(@)(@@) % يفديك عبد مودة % أسليته عن أهله % % 20(@)(@@) % وكتبت عهدة رقه % % بالمكرمات فحله % % PageV01P1629 21(@)(@@) % علي ديون من ثا لم أقم بها % % فيا عجبا لي في ازدياد من الفضل % % 22(@)(@@) % وأعجب من ذا أنك الشمس أشرقت % % وها أنا منها حيثما كنت في ظل % % 23(@)(@@) % أرسلت بعدكم بجهد نحوكم % % جبنا فيا خجلي ويا جهلي % % 24(@)(@@) % وبخلت عن مفروض حقكم % فجمعت بين الجبن والخل % % 25(@)(@@) % يا متقنا علم الشريعة والندى % % أنت الأحق بما يقول الأول % % 26(@)(@@) % تجب الزكاة على الذين وعدتهم % % وعدا فانهم بذاك تمولوا % % 27(@)(@@) % يا دهر رفقا فما أبقيت لي أملا % في ثروة أتمناها ولا جذل % % 28(@)(@@) % قطعت باليأس آمالي لديك فقد % % تركتني أصحب الدنيا بلا أمل % % 29(@)(@@) % أهلا بسائرة الصبا من نحوكم % % وبما عهدنا من تعاهد طولها % % 30(@)(@@) % أملت على الزهر المقطب ذكركم % % حتى تبسم ضاحكا من قولها 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms327# % % PageV01P1630 31(@)(@@) % غاب الوزير وكان العطف شيمته % % وجئت نعم أمير بالرجاء ملي % % 32(@)(@@) % فشيبة الحمد عندي والولاء معا % حقان بين أبي بكر وبين علي % % 33(@)(@@) % بقلت وجنة المليح وقد ول % ى زمان الضنا الذي كنت أملك % % 34(@)(@@) % يا عذار المليح دعني فاني % % لست في ذا الزمان من خل بقلك % % 35(@)(@@) % يا ابن النبوة والفتوة والتقى % % عذرا لمعلوم الولا لا يجهل % % 36(@)(@@) % كم بيت مدح قلت فيك لنظمه % % يا بيت عاتكة الذي أتغزل % % 37(@)(@@) % دامت صلاة الحمى الزيني واصلة % % كأن احسانها نصبا على الحال % % 38(@)(@@) % ولا برحنا وان شط المزار بنا % % من هالة البدر معنى في ابن منهال % % 39(@)(@@) % يا فتى العليا وصاحبها % % ما ترى في واثق الأمل % % 40(@)(@@) % تاليا إنسان مقلته % % خلق الانسان من عجل % % PageV01P1631 41(@)(@@) % رأينا تواقيع تاج العلوم % % على قصص ذات وصف جلي % % 42(@)(@@) % بنسك وجود وخط أجاد % % فقلت الثلاثة خط الولي % % 43(@)(@@) % يا صاحبي لك من سقم ومن كبر % عنق متين وفي الخدين تسهيل % % 44(@)(@@) % وطلعة شمل الخيلان وجنتها % % فعمها خالها قوداء شمليل % % 45(@)(@@) % سار الأمير علي في كفالته % % لمأمن الدهر سير الانزع البطل % % 46(@)(@@) % فنحن في الفضل ماضيه وحاضره % % نروي الثنا عن أمير المؤمنين علي % % 47(@)(@@) % وضعت سلاح الصبر عنه فما له % % يقاتل بالالحاظ من لا يقاتله % % 48(@)(@@) % وسال عذار حول خديه جائر % % على مهجتي فليتق الله سائله % % 49(@)(@@) % أحمد الله كم أجود في الخل % % ق مقالا وما يفيد المقال % % 50(@)(@@) % كلمي في الأنام سحر ولكن % % أنا والسحر باطل بطال % % PageV01P1632 51(@)(@@) % أهلا بمقدمك السعيد وحبذا % % عيش على رغم الأعادي مقبل % % 52(@)(@@) % طلع الهلال وبمن وجهك للورى % % يتفاضلان وأنت أنت الأفضل % % 53(@)(@@) % عش يا إمام العلى والعلم ذا نعم % لقاصر السعي مثلي طامح الأمل % % 54(@)(@@) % أقسمت ما عثرت بالفقر لي قدم % الا وصاح رجائي فيك يا لعلي % % 55(@)(@@) % وسمي برك يا ولي الوقت قد % % أربت بوادره على الأمل الملي % % 56(@)(@@) % لا يعدم الشام اقتتال وزارة % يسعى بها الوسمي من حول الولي % % 57(@)(@@) % أما حمى قاضي القضاة فانني % % عن جاهه أروي الصحيح وماله % % 58(@)(@@) % مهما سألت عن اختلاف مقاصدي % % قالت حلاه أجزته بسؤاله % % 59(@)(@@) % رسمت عوادي السحر من ألحاظه % % سطر الضنا من فوق جسمي البالي % % 60(@)(@@) % فاذتا تأمله الخبير 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms328# به رأى % % رسم ابن مقلة من يد ابن هلال % % PageV01P1633 61(@)(@@) % حضرت صلاة العصر خلف مبلغ % بهي المحيا يعشق الجمع شكله % 62(@)(@@) % فأقسم من خديه والثغر بالضحى % % وبالصبح ما أبصرت في العصر مثله % % 63(@)(@@) % ألا رب ليل واعدت فيه بالجفا % % ويا ويح روحي إن جفتها وويلها % % 64(@)(@@) % فبت كأني شعرها وهو مسبل % % أقبل رجلها وأمسك ذيلها % % 65(@)(@@) % أفدي التي ساق اليها مهجتي % % فرع طويل فوق حسن طائل % % 66(@)(@@) % قلبي بصدغيها إلى طلعتها % % يساق للجنة بالسلاسل % % 67(@)(@@) % يا باعث الجبن قد ساءت مطاعمه % % وتخلف الوعد في الشهد الذي يصل % % 68(@)(@@) % بخلت بالشهد لا بالجبن تبعثه % % لبئست الخلتان الجبن والبخل % % 69(@)(@@) % دنوت اليها وهو كالفرخ عاجز % % فيا خجلي لما دنوت وإذلالي % % 70(@)(@@) % وقلت امعكيه بالأنامل فالتقى % % لدى وكرها العناب والحشف البالي % % PageV01P1634 71(@)(@@) % سأسعى إلى أبوابكم ولو أنني % % على الرأس أسعى راضيا لا على الرجل % % 72(@)(@@) % وأمشي لكم ما بين مصر وغزة % وإن كنت لا أستحسن المشي في الرمل % % 73(@)(@@) % اذا جاء عثمان مستخبرا % عن المتقارب بحرا فقولوا % % 74(@)(@@) % ثقيل ثقيل ثقيل ثقيل % ثقيل ثقيل ثقيل ثقيل % 75(@)(@@) % أقوادتي إني فرغت من النسا % % وأضحى على ميل العلوق معولي % % 76(@)(@@) % فان كنت قد أزمعت بظرا فلا ولا % % وإن كنت قد أزمعت صرما فأجملي % % 77(@)(@@) % يا رب ناعورة غنت لنا وبكت % % كحالة الصب بين اليأس والأمل % % 78(@)(@@) % قالت ودمع أخي العشاق يتبعها % % أنا الغريق فما خوفي من البلل % % 79(@)(@@) % منع اتضاعك أن تقبل مبسمي % % قدما سموت بها إلى التفضيل % % 80(@)(@@) % فلذاك أهديت الركاب تخيلا % لأكون قد قبلتها برسول % % PageV01P1635 81(@)(@@) % ألا قل لمولانا الإمام أخي التقى % % أغثني فعندي للعلاء عليل % % 82(@)(@@) % فقدت دقيقا من معان ومأكل % ورأيك في استرجاع ذين جميل % % 83(@)(@@) % صحبنا أناسا عاطفين فغيروا % % ومالوا مع الأيام حيث تميل % % 84(@)(@@) % فصرنا نرى أن المتارك محسن % % وأن خليلا لا يضر وصول % % 85(@)(@@) % حمى الله من ريب الحوادث سادة % لشوقي بهم حال وللصبر ترحال % % 86(@)(@@) % كحلت جفوني بالسهاد لبعدهم % % فيا حبذا للسهد والبعد أميال % % 87(@)(@@) % أقول اذا استكتبت صدر رسالة % إلى آل فضل الله مأوى الفضائل % % 88(@)(@@) % أنا العبد يدعو الله في صدره لكم % % نعم ثم يدعو في صدور الرسائل % % 89(@)(@@) % وصلت إلى قصدي وسطر لي 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms329# بما % % أحلت وصول واستقر حصول % % 90(@)(@@) % ولولا الندى الفخري في كل حالة % % لما كان لي في الحالتين وصول % % PageV01P1636 91(@)(@@) % أفدي رئيسين قد أطلا % على ذرى المجد والمعالي % % 92(@)(@@) % لاق بذا قرب ذا فقلنا % % ما أليق البدر بالكمال % % 93(@)(@@) % أوقفني ودي مع هاجر % يبخل بالدرج وبالوصل % % 94(@)(@@) % والله لا غررت من بعدها % % ولا جعلت الود في حلي % % 95(@)(@@) % قل لخليلي الذي رجوت به % % تقدمي في الورى وإجلالي % % 96(@)(@@) % كدر لي دهري الحياة ومذ % % رجوت منه الصفاء صفالي % % 97(@)(@@) % قضيت العمر مداحا % وهذا يا أخي الحال % 98(@)(@@) % فقير الوجه والمكف % فلا جاه ولا مال % % 99(@)(@@) % عش يا ولي الوقت تنعش في الورى % % حالي الضعيف وكل حال مؤمل % % 100(@)(@@) % وفديت خطك في الرقاع مجاوبا % بالجود فهو حقيقة خط الولي % % PageV01P1637 101(@)(@@) % قاضي القضاة لقد حويت من العلى % % خط يطل على الكواكب من عل % % 102(@)(@@) % وفتاويا وفتوة شاهدتها % % فحفلت ما في الكون أفنى من علي % % 103(@)(@@) % إن لم تكن لأخي السؤال فمن له % % يا من صرفت له الرجاء فمله % 104(@)(@@) % وأعيذه من أن يراني مقسما % أن لست أفتح بالسؤال فما له % % 105(@)(@@) % جمال الدين قد أتقنت خطا % حوت أوضاعه معنى الجمال % % 106(@)(@@) % يقول ابن العديم لو اختلاه % % وقاك الله من عين الكمال % % 107(@)(@@) % كذا كل عام في وفور سيادة % وقدر له عند النجوم حصول % % 108(@)(@@) % وعليا تنادي لا وصول لحاسد % ولكن لمختار الصلات وصول % % 109(@)(@@) % أقاضي القضاة الذي قد علا % بأسمى السمات وأزكى الفعال % % 110(@)(@@) % بجود وزهد وخط بهر % % ت فأنت الولي على كل حال % % PageV01P1638 111(@)(@@) % رب غيث رام أن يحكي ندى % لك فينا ثم ولى واستحال % % 112(@)(@@) % عاقنا عنك وما حاكى فما % % هو إلا بارد في كل حال % % 113(@)(@@) % لو كان غيرك مخدوما ألوذ به % % لكان حالي على ما أشتهي حالي % % 114(@)(@@) % ولا هجيت فلا أمسيت مفتقرا % وبارك الله في عرضي وفي مالي % % 115(@)(@@) % يا نسبة الشمس في المعالي % % ملت لرجواي كل ميل % % 116(@)(@@) % فحبذا من جوار خير % % أفاد قصدي جراد خيل % % 117(@)(@@) % أيا سيدي ان ذاك الذي % % أمرت ببري سها عن خليلي % % 118(@)(@@) % وقال أناس أتاك الدقيق % % فقلت لهم لا وحق الجليل % % 119(@)(@@) % يسشائلني عن حال إيري من رأى % % على رأس إيري كتلة 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms330# حين أكتال % % 120(@)(@@) % فقلت له أنت الذي بأذاك ما % % تركت له رأسا مع الناس تنشال % % PageV01P1639 121(@)(@@) % قالوا وصولات الورى حصلت لهم % % ونراك لم تظفر لها بحصول % % 122(@)(@@) % أطلب وصولك قلت أن لم يقض لي % % قاضي القضاة فأين أين وصولي % % 123(@)(@@) % سل أسياف لحظه % % فالتقتها مقاتلي % % 124(@)(@@) % باخل لا يرق من % % دمع عيني لسائل % % 125(@)(@@) % أنا مجنون حبه % % ودموعي سلاسلي % % 126(@)(@@) % يا هلالا يحل من % % كبدي في منازل % % 127(@)(@@) % ذكر الله بالنع % % يم ليالي التواصل % % 128(@)(@@) % وسقى عهدها وإن % % عهدت بالشقاء لي % % PageV01P1640 البحر : - 1(@)(@@) % م حلوا بعقد الحسن أجيادهم % % وحاولوا صبري حتى استحال % % 2(@)(@@) % فآه من عاطل صبر مضى % % والحمد لله على كل حال % % PageV01P1641 البحر : - 1(@)(@@) % أيا حسنا قد هوى شائبا % لقد بتما والهوى مشكل % % 2(@)(@@) % فلو بتما عند قدريكما % % لبت وأعلا كما الاسفل % % PageV01P1642 البحر : - 1(@)(@@) % بروحي خليلا لم أجد مع صدوده % % إلى القلب عنه سلوة تتخلل % % 2(@)(@@) % ويعلم بأسي من جميل وفائه % % فما ضره بالقول لو يتجمل % % PageV01P1643 البحر : - 1(@)(@@) % أتاني علي الباسي بشعره % % فيا لك من شعر ثقيل مطول % % 2(@)(@@) % مكر مفر مدبر مقبل معا % كجلمود صخر حطه السيل من عل ي % % PageV01P1644 البحر : - 1(@)(@@) % يداوي أسى العشاق من نحو أرضكم % % نسيم صبا أضحى عليه قبول % % 2(@)(@@) % بروحي من ذاك النسيم اذا سرى % % طبيبا يداوي الناس وهو عليل % % PageV01P1645 البحر : - 1(@)(@@) % مبقل الخد قالوا % % فقلت ما ذاك يسلي % % 2(@)(@@) % هذا الزمرد حقا % ماذي حوائج بقلي % % PageV01P1646 البحر : - 1(@)(@@) % لا أرى لي في الشام بعد مادعى % % أحبتي وسادتي الرحيل % % 2(@)(@@) % وكيف أختار المقام في حمى % لا صاحب فيه ولا خليل % % PageV01P1647 البحر : - 1(@)(@@) % سألت الحلال فأعطى وقد % % سألناك يا من عليه يدل % % 2(@)(@@) % وأنت في الدولة ابن المعز % فلا تقصرن عن ابن الاجل % % PageV01P1648 البحر : - 1(@)(@@) % شهاب الدين يا غوث الموالي % % ومن حاز الثنا والفضل كله % % 2(@)(@@) % أغث قوما إلى البطيخ أمسوا % % قياما يسألون عن الأهلة % % PageV01P1649 البحر : - 1(@)(@@) % يفديك عبد مودة % أسليته عن أهله % % 2(@)(@@) % وكتبت عهدة رقه % % بالمكرمات فحله % % PageV01P1650 البحر : - 1(@)(@@) % علي ديون من ثا لم أقم بها % % فيا عجبا لي في ازدياد من الفضل % % 2(@)(@@) % وأعجب من ذا أنك الشمس أشرقت % % وها أنا منها حيثما كنت في ظل % % PageV01P1651 البحر : - 1(@)(@@) % أرسلت بعدكم بجهد نحوكم % % جبنا فيا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms331# خجلي ويا جهلي % % 2(@)(@@) % وبخلت عن مفروض حقكم % فجمعت بين الجبن والخل % % PageV01P1652 البحر : - 1(@)(@@) % يا متقنا علم الشريعة والندى % % أنت الأحق بما يقول الأول % % 2(@)(@@) % تجب الزكاة على الذين وعدتهم % % وعدا فانهم بذاك تمولوا % % PageV01P1653 البحر : - 1(@)(@@) % يا دهر رفقا فما أبقيت لي أملا % في ثروة أتمناها ولا جذل % % 2(@)(@@) % قطعت باليأس آمالي لديك فقد % % تركتني أصحب الدنيا بلا أمل % % PageV01P1654 البحر : - 1(@)(@@) % أهلا بسائرة الصبا من نحوكم % % وبما عهدنا من تعاهد طولها % % 2(@)(@@) % أملت على الزهر المقطب ذكركم % % حتى تبسم ضاحكا من قولها % % PageV01P1655 البحر : - 1(@)(@@) % غاب الوزير وكان العطف شيمته % % وجئت نعم أمير بالرجاء ملي % % 2(@)(@@) % فشيبة الحمد عندي والولاء معا % حقان بين أبي بكر وبين علي % % PageV01P1656 البحر : - 1(@)(@@) % بقلت وجنة المليح وقد ول % ى زمان الضنا الذي كنت أملك % % 2(@)(@@) % يا عذار المليح دعني فاني % % لست في ذا الزمان من خل بقلك % % PageV01P1657 البحر : - 1(@)(@@) % يا ابن النبوة والفتوة والتقى % % عذرا لمعلوم الولا لا يجهل % % 2(@)(@@) % كم بيت مدح قلت فيك لنظمه % % يا بيت عاتكة الذي أتغزل % % PageV01P1658 البحر : - 1(@)(@@) % دامت صلاة الحمى الزيني واصلة % % كأن احسانها نصبا على الحال % % 2(@)(@@) % ولا برحنا وان شط المزار بنا % % من هالة البدر معنى في ابن منهال % % PageV01P1659 البحر : - 1(@)(@@) % يا فتى العليا وصاحبها % % ما ترى في واثق الأمل % % 2(@)(@@) % تاليا إنسان مقلته % % خلق الانسان من عجل % % PageV01P1660 البحر : - 1(@)(@@) % رأينا تواقيع تاج العلوم % % على قصص ذات وصف جلي % % 2(@)(@@) % بنسك وجود وخط أجاد % % فقلت الثلاثة خط الولي % % PageV01P1661 البحر : - 1(@)(@@) % يا صاحبي لك من سقم ومن كبر % عنق متين وفي الخدين تسهيل % % 2(@)(@@) % وطلعة شمل الخيلان وجنتها % % فعمها خالها قوداء شمليل % % PageV01P1662 البحر : - 1(@)(@@) % سار الأمير علي في كفالته % % لمأمن الدهر سير الانزع البطل % % 2(@)(@@) % فنحن في الفضل ماضيه وحاضره % % نروي الثنا عن أمير المؤمنين علي % % PageV01P1663 البحر : - 1(@)(@@) % وضعت سلاح الصبر عنه فما له % % يقاتل بالالحاظ من لا يقاتله % % 2(@)(@@) % وسال عذار حول خديه جائر % % على مهجتي فليتق الله سائله % % PageV01P1664 البحر : - 1(@)(@@) % أحمد الله كم أجود في الخل % % ق مقالا وما يفيد المقال % % 2(@)(@@) % كلمي في الأنام سحر ولكن % % أنا والسحر باطل بطال % % PageV01P1665 البحر : - 1(@)(@@) % أهلا بمقدمك السعيد وحبذا % % عيش على رغم الأعادي مقبل % % 2(@)(@@) % طلع الهلال 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms332# وبمن وجهك للورى % % يتفاضلان وأنت أنت الأفضل % % PageV01P1666 البحر : - 1(@)(@@) % عش يا إمام العلى والعلم ذا نعم % لقاصر السعي مثلي طامح الأمل % % 2(@)(@@) % أقسمت ما عثرت بالفقر لي قدم % الا وصاح رجائي فيك يا لعلي % % PageV01P1667 البحر : - 1(@)(@@) % وسمي برك يا ولي الوقت قد % % أربت بوادره على الأمل الملي % % 2(@)(@@) % لا يعدم الشام اقتتال وزارة % يسعى بها الوسمي من حول الولي % % PageV01P1668 البحر : - 1(@)(@@) % أما حمى قاضي القضاة فانني % % عن جاهه أروي الصحيح وماله % % 2(@)(@@) % مهما سألت عن اختلاف مقاصدي % % قالت حلاه أجزته بسؤاله % % PageV01P1669 البحر : - 1(@)(@@) % رسمت عوادي السحر من ألحاظه % % سطر الضنا من فوق جسمي البالي % % 2(@)(@@) % فاذا تأمله الخبير به رأى % % رسم ابن مقلة من يد ابن هلال % % PageV01P1670 البحر : - 1(@)(@@) % حضرت صلاة العصر خلف مبلغ % بهي المحيا يعشق الجمع شكله % 2(@)(@@) % فأقسم من خديه والثغر بالضحى % % وبالصبح ما أبصرت في العصر مثله % % PageV01P1671 البحر : - 1(@)(@@) % ألا رب ليل واعدت فيه بالجفا % % ويا ويح روحي إن جفتها وويلها % % 2(@)(@@) % فبت كأني شعرها وهو مسبل % % أقبل رجلها وأمسك ذيلها % % PageV01P1672 البحر : - 1(@)(@@) % أفدي التي ساق اليها مهجتي % % فرع طويل فوق حسن طائل % % 2(@)(@@) % قلبي بصدغيها إلى طلعتها % % يساق للجنة بالسلاسل % % PageV01P1673 البحر : - 1(@)(@@) % يا باعث الجبن قد ساءت مطاعمه % % وتخلف الوعد في الشهد الذي يصل % % 2(@)(@@) % بخلت بالشهد لا بالجبن تبعثه % % لبئست الخلتان الجبن والبخل % % PageV01P1674 البحر : - 1(@)(@@) % دنوت اليها وهو كالفرخ عاجز % % فيا خجلي لما دنوت وإذلالي % % 2(@)(@@) % وقلت امعكيه بالأنامل فالتقى % % لدى وكرها العناب والحشف البالي % % PageV01P1675 البحر : - 1(@)(@@) % سأسعى إلى أبوابكم ولو أنني % % على الرأس أسعى راضيا لا على الرجل % % 2(@)(@@) % وأمشي لكم ما بين مصر وغزة % وإن كنت لا أستحسن المشي في الرمل % % PageV01P1676 البحر : - 1(@)(@@) % اذا جاء عثمان مستخبرا % عن المتقارب بحرا فقولوا % % 2(@)(@@) % ثقيل ثقيل ثقيل ثقيل % ثقيل ثقيل ثقيل ثقيل % PageV01P1677 البحر : - 1(@)(@@) % أقوادتي إني فرغت من النسا % % وأضحى على ميل العلوق معولي % % 2(@)(@@) % فان كنت قد أزمعت بظرا فلا ولا % % وإن كنت قد أزمعت صرما فأجملي % % PageV01P1678 البحر : - 1(@)(@@) % يا رب ناعورة غنت لنا وبكت % % كحالة الصب بين اليأس والأمل % % 2(@)(@@) % قالت ودمع أخي العشاق يتبعها % % أنا الغريق فما خوفي من البلل % % PageV01P1679 البحر : - 1(@)(@@) % منع اتضاعك أن تقبل مبسمي % % قدما 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms333# سموت بها إلى التفضيل % % 2(@)(@@) % فلذاك أهديت الركاب تخيلا % لأكون قد قبلتها برسول % % PageV01P1680 البحر : - 1(@)(@@) % ألا قل لمولانا الإمام أخي التقى % % أغثني فعندي للعلاء عليل % % 2(@)(@@) % فقدت دقيقا من معان ومأكل % ورأيك في استرجاع ذين جميل % % PageV01P1681 البحر : - 1(@)(@@) % صحبنا أناسا عاطفين فغيروا % % ومالوا مع الأيام حيث تميل % % 2(@)(@@) % فصرنا نرى أن المتارك محسن % % وأن خليلا لا يضر وصول % % PageV01P1682 البحر : - 1(@)(@@) % حمى الله من ريب الحوادث سادة % لشوقي بهم حال وللصبر ترحال % % 2(@)(@@) % كحلت جفوني بالسهاد لبعدهم % % فيا حبذا للسهد والبعد أميال % % PageV01P1683 البحر : - 1(@)(@@) % أقول اذا استكتبت صدر رسالة % إلى آل فضل الله مأوى الفضائل % % 2(@)(@@) % أنا العبد يدعو الله في صدره لكم % % نعم ثم يدعو في صدور الرسائل % % PageV01P1684 البحر : - 1(@)(@@) % وصلت إلى قصدي وسطر لي بما % % أحلت وصول واستقر حصول % % 2(@)(@@) % ولولا الندى الفخري في كل حالة % % لما كان لي في الحالتين وصول % % PageV01P1685 البحر : - 1(@)(@@) % أفدي رئيسين قد أطلا % على ذرى المجد والمعالي % % 2(@)(@@) % لاق بذا قرب ذا فقلنا % % ما أليق البدر بالكمال % % PageV01P1686 البحر : - 1(@)(@@) % أوقفني ودي مع هاجر % يبخل بالدرج وبالوصل % % 2(@)(@@) % والله لا غررت من بعدها % % ولا جعلت الود في حلي % % PageV01P1687 البحر : - 1(@)(@@) % قل لخليلي الذي رجوت به % % تقدمي في الورى وإجلالي % % 2(@)(@@) % كدر لي دهري الحياة ومذ % % رجوت منه الصفاء صفالي % % PageV01P1688 البحر : - 1(@)(@@) % قضيت العمر مداحا % وهذا يا أخي الحال % 2(@)(@@) % فقير الوجه والمكف % فلا جاه ولا مال % % PageV01P1689 البحر : - 1(@)(@@) % عش يا ولي الوقت تنعش في الورى % % حالي الضعيف وكل حال مؤمل % % 2(@)(@@) % وفديت خطك في الرقاع مجاوبا % بالجود فهو حقيقة خط الولي % % PageV01P1690 البحر : - 1(@)(@@) % قاضي القضاة لقد حويت من العلى % % خط يطل على الكواكب من عل % % 2(@)(@@) % وفتاويا وفتوة شاهدتها % % فحفلت ما في الكون أفنى من علي % % PageV01P1691 البحر : - 1(@)(@@) % إن لم تكن لأخي السؤال فمن له % % يا من صرفت له الرجاء فمله % 2(@)(@@) % وأعيذه من أن يراني مقسما % أن لست أفتح بالسؤال فما له % % PageV01P1692 البحر : - 1(@)(@@) % جمال الدين قد أتقنت خطا % حوت أوضاعه معنى الجمال % % 2(@)(@@) % يقول ابن العديم لو اختلاه % % وقاك الله من عين الكمال % % PageV01P1693 البحر : - 1(@)(@@) % كذا كل عام في وفور سيادة % وقدر له عند النجوم حصول % % 2(@)(@@) % وعليا تنادي لا وصول لحاسد 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms334# % ولكن لمختار الصلات وصول % % PageV01P1694 البحر : - 1(@)(@@) % أقاضي القضاة الذي قد علا % بأسمى السمات وأزكى الفعال % % 2(@)(@@) % بجود وزهد وخط بهر % % ت فأنت الولي على كل حال % % PageV01P1695 البحر : - 1(@)(@@) % رب غيث رام أن يحكي ندى % لك فينا ثم ولى واستحال % % 2(@)(@@) % عاقنا عنك وما حاكى فما % % هو إلا بارد في كل حال % % PageV01P1696 البحر : - 1(@)(@@) % لو كان غيرك مخدوما ألوذ به % % لكان حالي على ما أشتهي حالي % % 2(@)(@@) % ولا هجيت فلا أمسيت مفتقرا % وبارك الله في عرضي وفي مالي % % PageV01P1697 البحر : - 1(@)(@@) % يا نسبة الشمس في المعالي % % ملت لرجواي كل ميل % % 2(@)(@@) % فحبذا من جوار خير % % أفاد قصدي جراد خيل % % PageV01P1698 البحر : - 1(@)(@@) % أيا سيدي ان ذاك الذي % % أمرت ببري سها عن خليلي % % 2(@)(@@) % وقال أناس أتاك الدقيق % % فقلت لهم لا وحق الجليل % % PageV01P1699 البحر : - 1(@)(@@) % يسائلني عن حال إيري من رأى % % على رأس إيري كتلة حين أكتال % % 2(@)(@@) % فقلت له أنت الذي بأذاك ما % % تركت له رأسا مع الناس تنشال % % PageV01P1700 البحر : - 1(@)(@@) % قالوا وصولات الورى حصلت لهم % % ونراك لم تظفر لها بحصول % % 2(@)(@@) % أطلب وصولك قلت أن لم يقض لي % % قاضي القضاة فأين أين وصولي % % PageV01P1701 البحر : - 1(@)(@@) % سل أسياف لحظه % % فالتقتها مقاتلي % % 2(@)(@@) % باخل لا يرق من % % دمع عيني لسائل % % 3(@)(@@) % أنا مجنون حبه % % ودموعي سلاسلي % % 4(@)(@@) % يا هلالا يحل من % % كبدي في منازل % % 5(@)(@@) % ذكر الله بالنع % % يم ليالي التواصل % % 6(@)(@@) % وسقى عهدها وإن % % عهدت بالشقاء لي ه % % PageV01P1702 البحر : - 1(@)(@@) % أوجز مديحك فالنقام عظيم % % من دونه المنثور والمنظوم % % 2(@)(@@) % من كان في سور الكتاب مديحه % % ماذا تساور فكرة وتروم % % 3(@)(@@) % جبريل راوي نصه الأحلى وفي % % ورق الجنان كتابه مرقوم % % 4(@)(@@) % قل يا محمد تفصح الاكوان عن % % حمد كأن مزاجه تسنيم % % 5(@)(@@) % بدر تالق فالطريق محجة % % لذوي الهداية والصراط قويم % % 6(@)(@@) % حرست بمولده السماء من الذي % % أصغى زمانا فالنجوم رجوم % 7(@)(@@) % وتشرفت أرض بموطيء نعله % % وسمت حصاها فالرجوم نجوم % % 8(@)(@@) % وخبت به نيران فارس آية % % يدري بها من قبل إبراهيم % % 9(@)(@@) % لو لم يكن في صلبه ما بدلت % % نيرانه فرجعن وهي نعيم % % 10(@)(@@) % وكفى لأمته بذاك بشارة % % أن سوف تخمد في الجنان جحيم % % PageV01P1703 11(@)(@@) % هي آية أولى ووسطى تقتضي % % في الحشر أخرى والشفيع كريم % % 12(@)(@@) % ونبوة 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms335# شفت القلوب وبينت % % ان الكتاب كما رأيت حكيم % % 13(@)(@@) % يا صفوة الرسل الذي لولاه لم % % يثبت على حد المقام كليم % % 14(@)(@@) % كلا ولا سكن الجنان أب ولم % % ينهض إلى روح المسيح رميم % % 15(@)(@@) % الله قد صلى عليك فكل ذي % % مجد لمجدك دأبه التسليم % % 16(@)(@@) % ودعاك في الذكر اليتيم وانما % % أسنى الجواهر ما يقال يتيم % % 17(@)(@@) % سبقت مناقبك السراة ومن سرى % % فوق البراق فسبقه محتوم % % 18(@)(@@) % أنت الامام ورب كل رسالة % % يوم الفخار وراءك المأموم % % 19(@)(@@) % أنت الختام لهم وأنت فخارهم % % وبمسكه فليفخر المختوم % % 20(@)(@@) % أنت الغياث اذا الصحائف نشرت % % وبدا جنا الجنات والزقوم % % PageV01P1704 21(@)(@@) % يوم الفرار من الصديق فماالذي % % صحب سوى العرق الصبيب حميم % % 22(@)(@@) % والخلق شاخصة لجاه مشفع % % فرد الجلال لشأنه التعظيم % % 23(@)(@@) % بمقامك المرفوع يخفض ذنبنا ال % % منصوب ان رجاءنا المجزوم % % 24(@)(@@) % يا أيها البحر المطهر إننا % % طلاب حوضك يوم تسعى الهيم % % 25(@)(@@) % سادت بها الصلوات ما أسرى بنا % % للصبح أشهب والظلام بهيم % % PageV01P1705 البحر : - 1(@)(@@) % هناء محا ذاك العزاء المقدما % % فما عبس المحزون حتى تبسما % % 2(@)(@@) % ثغور ابتسام في ثغور مدامع % % شبيهان لا يمتاز ذو السبق منهما % % 3(@)(@@) % نرد مجاري الدمع والبشر واضح % % كوابل غيث في ضحى الشمس قد همى % % 4(@)(@@) % سقى الغيث عنا تربة الملك الذي % % عهدنا سجاياه أبر وأكرما % % 5(@)(@@) % ودامت يد النعمى على الملك الذي % % تدانت له الدنيا وعز به الحمى % % 6(@)(@@) % مليكان هذا قد هوى لضريحه % % برغمي وهذا للأسرة قد سما % % 7(@)(@@) % ودوحة ملك شادوي تكافأت % % فغصن ذوى منها وآخر قد نما % % 8(@)(@@) % فقدنا لأعناق البرية مالكا % وشمنا لأنواع الجميل متمما % % 9(@)(@@) % اذا الأفضل الملك اعتبرت مقامه % % وجدت زمان الملك قد عاد مثلما % % 10(@)(@@) % أعاد معاني البيت حتى حسبته % % بوزن الثنا والحمد بيتا منظما % % PageV01P1706 11(@)(@@) % وناداه ملك قد تقادم ارثه % % فقام كما ترضى العلى وتقدما % % 12(@)(@@) % تقابل منه مقلة الدهر سؤددا % % صميما وتنضو الرأي عضبا مصمما % % 13(@)(@@) % ويقسم فينا كل سهم من الندى % % ويبعث للأعداء في الروع أسهما % % 14(@)(@@) % كأن ديار الملك غاب اذا انقضى % % به ظيغم أنشابه الدهر ضيغما % % 15(@)(@@) % كأن عماد البيت غير مقوض % وقد قمت يا أزكى الأنام وأحزما % % 16(@)(@@) % نهضت فما قلنا سيادة معشر % % تداعت ولا بنيان قوم تهدما 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms336# % % 17(@)(@@) % أما والذي أعطاك ما أنت أهله % % لقد شاد من علياك ركنا معظما % % 18(@)(@@) % وقد أنشر الاسلام بالخلف الذي % % تمكن في عليائه وتحكما % % 19(@)(@@) % فإن يك من أيوب نجم قد انقضى % % فقد أطلعت أوصافك الغر أنجما % % 20(@)(@@) % وإن تك أوقات المؤيد قد خلت % % فقد جددت علياك وقتا وموسما % PageV01P1707 21(@)(@@) % عليه سلام الله ما ذر شارق % % ورحمته ما شاء أن يترحما % % 22(@)(@@) % هو الغيث ولى بالثناء مشيعا % وأبقاك بحرا للمواهب منعما % % 23(@)(@@) % لك الله ما أبهى وأبهر طلعة % وأفضل أخلاقا وأشرف منتمى % % 24(@)(@@) % بك انبسطت فيك التهاني وأنشأت % % ربيع الهنا حتى نسينا المحرما % % 25(@)(@@) % وباسمك في الدنيا استقرت محاسن % وبأس كما يمضي القضاء محتما % % 26(@)(@@) % وفضل به الألفاظ للعجز أخرست % % وعز به قلب الحسود تكلما % % 27(@)(@@) % أعدت حياة المقترين وقد عفت % % فأنت ابن أيوب والا ابن مريما % % 28(@)(@@) % وجددت يا نجل الفضائل والعلى % % من الدين علما أو من الجود معلما % % 29(@)(@@) % يراعك يوم السلم ينهل ديمة % وسيفك يوم الحرب ينهل في الدما % % 30(@)(@@) % وذكر ندى كفيك يدني من الغنى % % ولثم ثرى نعليك يروي من الظما % % PageV01P1708 31(@)(@@) % لك الملك إرثا واكتسابا فقد غدا % % كلا طرفيه في السيادة معلما % % 32(@)(@@) % ومثلك إما للسرير منعما % يثوب وإما للجواد مطهما % % 33(@)(@@) % ولما عقدنا باسم علياك خنصرا % رأينا من التحقيق أن يتحتما % % 34(@)(@@) % أيا ملكا قد أنجد الناس عزمه % % فأنجد مدح الناس فيه وأتهما % % 35(@)(@@) % سبقت لك المداح قدما وبادرت % % يدا كلمي فاستلزمت منك ملزما % % 36(@)(@@) % ليالي أنشي في أبيك مدائحا % وفيك فأروي مسند الفضل عنكما % % 37(@)(@@) % وأغدو بأنواع الجميل مطوقا % فأسجع في أوصافه مترنما % % 38(@)(@@) % واستوضح العلياء فيك فراسة % % بملكك لا أعطي عليها منجما % % 39(@)(@@) % فعش للورى واسلم سعيدا مهنئا % فحظ الورى في أن تعيش وتسلما % % 40(@)(@@) % وسر في أمان الله قدما بفضله % % أسر الورى مسرى وأيمن مقدما % % PageV01P1709 41(@)(@@) % أعدت زمان البشر والجود والثنا % % إلى أن ملأت العين والأنف والفما % % PageV01P1710 البحر : - 1(@)(@@) % فديت محيا في مسائله ينمي % % فخذ إلى بدر ولحظ إلى سهم % % 2(@)(@@) % و لله قلب في الصبابة والجوى % % أضلته أحداق الحسان على علم % % 3(@)(@@) % وقفت على مغنى الأحبة ناديا % % لما أبلت الأيام منه ومن جسمي % % 4(@)(@@) % وقدم دمعي قصة في رسومه % % فوقع 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms337# فيها الوجد يجري على الرسم % % 5(@)(@@) % فيالك دمعا من ولي صبابة % % سقى الأرض حتى ما تحن إلى الوسم % % 6(@)(@@) % يقولون حاذر سقم جسمك في الهوى % % ومن لي بجسم تلتقيه يد السقم % % 7(@)(@@) % عشقت على خديك حرف عذارها % % فلم يبق ذاك الحرف مني سوى الاسم % % 8(@)(@@) % اذا فتن الألباب حسنك ساذجا % فما حاجة الخد اليديع إلى الرقم % % 9(@)(@@) % ألم يكفك اللحظ الذي صال وانتشى % % فلم يخل في الحالين من صفة الإثم % % 10(@)(@@) % ومبتسم فيه اللآلي يتيمة % % وليس على أسلاكه ذلة اليتم % % PageV01P1711 11(@)(@@) % يصد بلا ذنب عن الصب ظلمه % % لقد صح عندي أنه بارد الظلم % % 12(@)(@@) % سقى المطر الغادي صباي وصبوتي % % فما كنت الا في ليال وفي حلم % % 13(@)(@@) % وحيي ديارا بالنقا ومرابعا % بنيت بها هيف القدود على الضم % % 14(@)(@@) % زمان على حكمي تولت هباته % % ولكنها ولت فزالت على رغمي % % 15(@)(@@) % وأملت من إنعام أحمد مسليا % فناجيت وجه النجح من صحة الوهم % % 16(@)(@@) % وراح رجائي يضرب الفأل موقنا % وقامت قوافي الشعر تنظر في النجم % % 17(@)(@@) % اذا لم تجد قاضي القضاة ظماءها % % فأي امريء يروي بنائله الجم % 18(@)(@@) % امام علي عن غاية المدح مجده % % إلى أن حسبنا المدح فيه من الذم % 19(@)(@@) % فلم يكفه أن أذهب الفقر بالندى % % عن الناس حتى أذهب الجهل بالعلم % % 20(@)(@@) % ترى الوفد والسادات من حول شخصه % % كما تشخص الأبصار للقمر التم % % PageV01P1712 21(@)(@@) % تقبل أطراف البساط ثغورهم % % ويقصر ثغر الشهب عن طرف الكم % % 22(@)(@@) % عجبت لمن يردي بهيبته العدى % % ويسطو سطاه كيف يوصف بالحلم % % 23(@)(@@) % ومن يهمل الجاني ويحلم حلمه % % على كل جان كيف يوصف بالعزم % % 24(@)(@@) % يدل لديه المخطئن بجرمهم % % لما أظهروا من شيمة العفو بالجرم % % 25(@)(@@) % ويدعو اليه المعتفين ثناؤه % كما يستدل الطالب الروض بالشم % % 26(@)(@@) % له قلم مد البيان عنانه % % وجال فقال فارس النثر والنظم % % 27(@)(@@) % تعود أن ينشي فتنتج نشوة % % إلى أن ظنناه قضيبا من الكرم % % 28(@)(@@) % وفوق منه الشرع سهم إصابة % % فلا غرو إن أضحى به وافر السهم % % 29(@)(@@) % اذا لاح بين الرفع والخفض شكله % % رأيت القضايا كيف تنفذ بالجزم % % 30(@)(@@) % اليك ثناها الفضل من كل وجهة % وسار ثنا علياك في العرب والعجم % % PageV01P1713 31(@)(@@) % لئن ظن ساع أن ينالك في العلى 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms338# % % لقد حق عندي ذلك الظن بالرجم % % 32(@)(@@) % أيا ابن السراة المالئين فجاجها % % ردى وندى بوم الكريهة والسلم % % 33(@)(@@) % دعوتك لا أدلي اليك بشافع % ولا سبب إلا بسؤددك الضخم % % 34(@)(@@) % وخفت على قصدي سواك من الورى % % فألفيته من جود كفك في اليم % 35(@)(@@) % وإني وذكري ما حويت من الثنا % % كمن رام تعداد القطار التي تهمي % % 36(@)(@@) % وماذا يقول اللفظ في النجم واصفا % وحسبك أن الله أقسم بالنجم % % PageV01P1714 البحر : - 1(@)(@@) % ليهن بنو الآمال أنك قادم % % لك السعد والاقبال عبد وخادم % % 2(@)(@@) % أرى العمر إلا يوم قربك باطلا % كأني بين الناس بعدك حالم % % 3(@)(@@) % و يظمأ طرفي للقا وهو دامع % فيالك ظام وهو في الماء عائم % % 4(@)(@@) % سقى الغيث عيسا للحجاز ركبتها % % كما ركبت ظهر الرياح الغمائم % % 5(@)(@@) % وحملتها عبء العلوم فمن رأى % % قواعد شرع حملتها قوائم % % 6(@)(@@) % ولما حللت البيت كاد مقامه % للقياك يسعى فهو للسعي قائم % % 7(@)(@@) % وأذكرته في الوفد وفد قديمه % % لأنك للأموال في الجود هاشم % % 8(@)(@@) % يطوف بك المعتر بعد طوافه % % ويلثم بعد الركن كفك لاثم % % 9(@)(@@) % إلى أن ملأت الحجر بالبيت والورى % % لهذا كرامات وهذا مكارم % % 10(@)(@@) % وعدت إلى أوطان يثرب غانما % وفي كل أرض من نداك مغانم % % PageV01P1715 11(@)(@@) % فعاد إلى علم المدينة مالك % وعاد إلى جود البداوة حاتم % 12(@)(@@) % وكادت تبارينا دمشق بشجوها % % اليك وقد تشجى الربى والمعالم % % 13(@)(@@) % لئن أوحشتها منك ربوة سؤدد % % لقد أوحشتها من نداك المقاسم % % 14(@)(@@) % فوافيتها والعيش مقتبل الهنا % % وعزمك مبرور وسرحك سالم % % 15(@)(@@) % تشير لرؤياك الغصون بأنمل % % وتفتر من عجب عليها الكمائم % % 16(@)(@@) % وتهتز أعواد المنابر فرحة % فهل رجعت للعهد وهي نواعم % % 17(@)(@@) % وما هي الا غاب مجد توطنت % % مساكنه أشبالكم والضراغم % % 18(@)(@@) % وعظمتم وقد أحصيتم درجاتها % % كما صدحت فوق الغصون الحمائم % % 19(@)(@@) % اليك جلال الدين أصبحت العلى % % وسلم أعراب الورى والأعاجم % % 20(@)(@@) % اذا ريم خير أو تعرض حادث % % روى نافع عن شيمتيك وعاصم % % PageV01P1716 21(@)(@@) % سبقت إلى الفضل السراة فما لهم % % من الجهد الا أن تعض الأباهم % % 22(@)(@@) % وجدت على داني الديار ونازح % % كأن المداني للبعيد مساهم % % 23(@)(@@) % فما فات رزق من تنبه للسرى % % ومن يتمنى رزقه وهو نائم % % 24(@)(@@) % لك القلم الراقي سحائب أنمل % % تريك رياض الخط وهي بواسم 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms339# % % 25(@)(@@) % اذا هز في يوم الخطوب فعامل % % وان هز في يوم الخطاب فعالم % % 26(@)(@@) % علوت إلى أن جئت بالشهب منطقا % يضيء به سار وينهل شائم % % 27(@)(@@) % وسكنت من جور الزمان محركا % لأنك بالأفعال في الفضل جازم % % 28(@)(@@) % ونفقت قولي وهو في الدهر كاسد % وحققت ظني وهو في الخلق واهم % % 29(@)(@@) % ونبهت من قدري الذي طال واعتلى % % وأقدار قوم في التراب رمائم % % 30(@)(@@) % وكم مدحة لي فيك عاجلها الغنى % % كما نثرت فوق العروس الدراهم % % PageV01P1717 31(@)(@@) % قطعت بها أيدي وأرجل حاسد % كما تتلوى في الصعيد الأراقم % % 32(@)(@@) % من الاء تسري في دجى من مدادها % % وتجلى كما تجلى النجوم العواتم % % 33(@)(@@) % فخذها صناع اللفظ من متأخر % مضى زمن عن مثلها متقادم % % 34(@)(@@) % مشوقة الممات يحسن رشفها % % فيحلف إلا أنهن مباسم % % 35(@)(@@) % علينا اجتهاد القول فيك وما على % % أخي الجهد أن تقضى الحقوق اللوازم % % 36(@)(@@) % لئن كلفت علياك فكرة مادح % وفاء معانيها لحسنك ظالم % % PageV01P1718 البحر : - 1(@)(@@) % بكيت بأجفان المحب المتيم % % فدع ما بكت قبلا جفون متمم % % 2(@)(@@) % و هيج شوقي في الدجى صوت طائر % % فقل في فصيح شاقة شوق أعجمي % % 3(@)(@@) % ورب عذول لست أفهم قوله % % وان كنت عين السامع المتفهم % % 4(@)(@@) % فان شاء فليسكت وان شاء فليقم % % إلى حيث ألقت رحلها أم قشعم % % 5(@)(@@) % مطيل يرجي أن تحل عقودنا % % فيا عجبا من ناقض الحبل مبرم % % 6(@)(@@) % ويا حربا مما غدوت بلحظه % % قتيل الأسى ما بين نصل ولهذم % % 7(@)(@@) % شهيدا ترى لي فوق وجنتيه دما % روائحه للمسك واللون للدم % % 8(@)(@@) % روائح يعبقن الملا فكأنها % % لذكر علاء الدين في الطيب ينتمي % % 9(@)(@@) % رئيس حوى فضل المكارم شخصه % % كما حوت الالفاظ أحرف يعجم % % 10(@)(@@) % روى الشعر أخبار الندى عن بنانه % % ونص أحاديث التقى كل مسلم % % PageV01P1719 11(@)(@@) % وصحت أسانيد السيادة والنهى % % عن الاذن عن عين البصير عن الفم % % 12(@)(@@) % لئن حاط مصرا والشآم برأيه % % لقد حاط أوطان الحطيم وزمزم % % 13(@)(@@) % كأن فجاج الأرض مما تنورت % % بأوصافه الحسنى منازل أنجم % % 14(@)(@@) % له راحة صلى الحيا خلف جودها % % وأذعن فانظر للمصلي المسلم % % 15(@)(@@) % عجبت لها في الجود تظلم مالها % % وتلك أمان الخائف المتظلم % % 16(@)(@@) % اذا خط فوق الطرس سهم يراعه % % طربت لتخطيط الرداء المسهم % % 17(@)(@@) % فأحسن بذاك الطرس 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms340# في كل ناظر % % وأعصم بذياك اليراع وأكرم % % 18(@)(@@) % عدا السمر أن تحكي سطاه وبأسه % % فهن متى ما يقرع السن تندم % % 19(@)(@@) % ووفرسعي البيض في حومة الوغى % % فنام إذا في جفنه كل مخدم % % 20(@)(@@) % لك الله ما أزكى وأشرف همة % وأفصح رأيا في الزمان المجمجم % % PageV01P1720 21(@)(@@) % جمعت الندى والزهد والبأس والحجى % % فجد وتورع وامنع الضيم واحلم % % 22(@)(@@) % وجزت بميدان العبادة غاية % تذكرنا يوم السباق ابن أدهم % % 23(@)(@@) % ولما شكونا من جمادى زماننا % % فضلت على نوء الربيع المحرم % % 24(@)(@@) % وأنت الذي لو ملك البدر كفه % % لأنفقته في القاصدين كدرهم % % 25(@)(@@) % إلى بابك الأعلى قصائد مادح % تثنيه على وشي الربيع المنمنم % % 26(@)(@@) % ضربت اليك الرمل سعيا وربما % % ضربنا عليك الرمل عند المنجم % % 27(@)(@@) % وكنت إذا عين الزمان توسمت % % وجدتك أقصى ناظر المتوسم % % 28(@)(@@) % بقيت مدى الأيام تخدم بالهنا % % وكل صناع اللفظ صائبة الرمي % % 29(@)(@@) % يشيب وليد الشعر دون مرامها % % ويرتد عن إدراكها فكر مسلم % % 30(@)(@@) % تقدم حسن المدح حسن مكارم % % لديك وكان الفضل للمتقدم % % PageV01P1721 البحر : - 1(@)(@@) % قاضي القضاة بيمنى حكمه القلم % % يا ساري القصد هذا الباب والعلم % % 2(@)(@@) % هذا اليراع الذي تجني الفخار به % % يد الامام التي معروفها أمم % 3(@)(@@) % إن آلم الحكم فقد الذاهبين فقد % % وافى الهناء فزال اللبس والألم % % 4(@)(@@) % ولى علي ووافى بعد مشبهه % % كالسيل أقبل لما ونت الديم % % 5(@)(@@) % لايبعد الله أيام العلاء فما % % يقضي حقوق ثناها في الأنام فم % 6(@)(@@) % ويمنع الله بالراقي لرتبته % % فقد تشابهت الأخلاق والشيم % % 7(@)(@@) % معيي المماثل في علم وفيض ندى % فالسحب باكية والبحر ملتطم % 8(@)(@@) % وكاتم الصدقات الغر تكرمة % للمرء لوكان عرف المسك يكتتم % % 9(@)(@@) % وافى الشآم وما خلنا الغمام إذا % % بالشام ينشأ من مصر وينسجم % % 10(@)(@@) % آها لمصر وقد شابت لفرقته % % فليس ينكر أن يعزى لها هرم % % PageV01P1722 11(@)(@@) % تقاسمت بعد رؤياه الأسى ودرت % % لأن البلاد لها مثل الورى قسم % % 12(@)(@@) % وأوحش الثغر من مرآي محاسنه % % فما يكاد بوجه الدهر يبتسم % % 13(@)(@@) % ينشي وينشد فيه الثغر من أسف % بيتا تكاد له الأحشاء تضطرم % % 14(@)(@@) % يا من يعز علينا أن نفارقهم % % وجداننا كل شيء بعدكم عدم % % 15(@)(@@) % يزهو الشآم بمن فارقت طلعته % % وا حر قلباه ممن قلبه شيم % % 16(@)(@@) % نعم الهدى ونجوم الليل 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms341# حائرة % % والمجتدى وزمان المحل محتدم % % 17(@)(@@) % أقسمت بالمرسلات السمر في يده % % لقد تهيب منها الابيض الخدم % % 18(@)(@@) % وقائل أسرت مسراه قلت له % % نعم المنام الذي أبصرت والحلم % % 19(@)(@@) % لو لم تنم لم تحاول في العلى طرقا % زلت بنجم الثريا دونها القدم % % 20(@)(@@) % كل الفصول ربيع في منازله % % وكل أشهرنا في بابه حرم % PageV01P1723 21(@)(@@) % يا واثق الظن في علياه عش أبدا % وأنت معتضد بالسعد معتصم % % 22(@)(@@) % ورمه إن طاشت الأيام أو بخلت % % فالحلم والجود في ناديه مقتسم % % 23(@)(@@) % هنالك الطود إلا أنه رجل % % في كفه البحر إلا أنه كرم % % 24(@)(@@) % حبر طباق المعالي فيه متضح % فالمال مفترق والمجد ملتئم % % 25(@)(@@) % وللجناس نصيب من مناقبه % % فالفضل والفصل والاحكام والحكم % % 26(@)(@@) % ما يرفع الظن طرفا في مكارمه % % إلا وعزم الرجا بالنجح منجزم % % 27(@)(@@) % لبشره وارتياح المكرمات به % % مقدمات عليها تنتج النعم % % 28(@)(@@) % قالت مناقبه العليا وما أفكت % % هذا التقي النقي الطاهر العلم % % 29(@)(@@) % أهلا بمحتكم الآراء فاصلها % % والقاصدون على جدواه تحتكم % % 30(@)(@@) % كان الزمان لنا حربا نخادعه % % فاليوم ألقي فيما بيننا السلم % % PageV01P1724 31(@)(@@) % وكان مغنى العلى عطلا فقام به % % ركن تطوف به العلياء وتستلم % % 32(@)(@@) % يا حاكما ما رصدنا نجم مقدمه % % إلا انجلت عن ليالي قصدنا الظلم % % 33(@)(@@) % حدوت لي أملا من بعد ما عرفت % % نفسي عن الناس ان ضنوا وان كرموا % % 34(@)(@@) % وكان منطقي العربي ممتنعا % عن الأنام فلا عرب ولا عجم % % 35(@)(@@) % مالي وللشعر في حي وفي زمن % سيان فيه حسام الهند والحلم % % 36(@)(@@) % حتى اذا أشرقت علياك عاطية % % رأيت عقد القوافي كيف ينتظم % % 37(@)(@@) % هدمت بيت الغنى مما تجود به % % فاهنأ بأبيات مدح ليس تنهدم % % 38(@)(@@) % ما بعد علياك يحيى واصف كلما % وليت لو وسعت أوصافك الكلم % % 39(@)(@@) % لا عطلت منك دنيانا ولا فقدت % % نسيم أنفاسك الأرواح والنسم % % PageV01P1725 البحر : - 1(@)(@@) % صيرني في كل واد أهيم % % من حظ قلبي منه هاء وميم % % 2(@)(@@) % مبخل يشبه ريم الفلا % % واطول شجوي من بخيل كريم % % 3(@)(@@) % لم أنس في حبه كم ليلة % خلفني أرعى دجاها البهيم % % 4(@)(@@) % نظرت في أنجمها نظرة % فقال لي جسمي أني سقيم % % 5(@)(@@) % شوقا لمن لست على حبه % % بصالح لكن قلبي كليم % % 6(@)(@@) % بدر على غصن جديد الحيا % % فخل 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms342# عرجون الهلال القديم % % 7(@)(@@) % وأقسم بواو القسم الصدق من % % صدغيه أن ليس له من قسيم % % 8(@)(@@) % ولا تخلني سامعا لومة % أعوذ بالله السميع العليم % % 9(@)(@@) % في شرعة البين وحكم الأسى % % جفن نزوح وغرام مقيم % % 10(@)(@@) % وثابت الود لديغ الحشا % % يأتي إلى الله بقلب سليم % % PageV01P1726 11(@)(@@) % يا روضة تجني بألحاظنا % % فنجتني حر الشقا من نعيم % % 12(@)(@@) % كن كيفما شئت وعن مهجتي % % فلا تسل عن حال أهل الجحيم % % 13(@)(@@) % ما الشمس الا وجهك المجتلي % % وما الحيا الا ندى ابن العديم % % 14(@)(@@) % كمال دين الله من غيثه % % قد ألحق النائي بخصب المقيم % % 15(@)(@@) % لا يسأل القاصد عن بابه % % إلا سنا النمشر وطيب الشميم % % 16(@)(@@) % ماذا لقينا في حديث الثنا % % من مجده المتضح المستقيم % % 17(@)(@@) % الناطق الواصف في خجلة % % بالعجز والساكت عين الأثيم % % 18(@)(@@) % ذو طلعة في البشر كم ناظرت % % بدرا فأمسى خده كاللطيم % % 19(@)(@@) % وهمة في الفضل كم جاورت % % غيثا فولى غيمه كالهزيم % % 20(@)(@@) % قاض قضى العدل ولكنه % % قضى على المال قضاء الغريم % % PageV01P1727 21(@)(@@) % ما فطمت من كرم كفه % % من قبل ما أدرك سن الفطيم % % 22(@)(@@) % جاء النهى يسأل ميلاده % فبشروه بغلام حليم % % 23(@)(@@) % لا عيب فيه غير نعمى يد % يمشي شذا أنفاسها بالنسيم % % 24(@)(@@) % من معشر سادوا وساسوا الورى % % ببأس قاس ويجدوى رحيم % % 25(@)(@@) % مثل النجوم الزهر كم مهتد % بها من الناس وكم من رجيم % % 26(@)(@@) % تطوف الاشعار من حولهم % % فائزة ما سعيها بالذميم % % 27(@)(@@) % وخير ماطاف لنسك العلى % % بيت نظيم حول بيت عظيم % % 28(@)(@@) % يا عمر الخير لقد نبهت % % منك المعالي طراف راع حكيم % % 29(@)(@@) % لا زلت ذا ذكر كثير السرى % % بكل أرض وندى لا يريم % % 30(@)(@@) % كم عادنا منك ندى مشهر % لواحظ المدح وأمن منيم % % PageV01P1728 31(@)(@@) % وكم رأيناك لمربى الثنا % % أبا فجئناك بدر يتيم % % PageV01P1729 البحر : - 1(@)(@@) % رب عيش كأس مدامه % % ومليح ضممت غصن قوامه % % 2(@)(@@) % تائه أقنع الهلال افتخارا % انه قد غدى مثال لثامه % % 3(@)(@@) % عربي إلى كنانة معزا % % ه ولكن لحاظه من سهامه % % 4(@)(@@) % ضائع العين كل سهران فيه % % ضيعة القاف في حروف كلامه % % 5(@)(@@) % هب في جامه كخمرة فيه % وسقاني فوه كخمرة جامه % % 6(@)(@@) % وجفاني بعد اللقاء فيا نا % % ر فؤاد المحب بعد سلامه % % 7(@)(@@) % ويح صب يخفى بكميه دمعا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms343# % وهو كالزهر لاح في أكمامه % % 8(@)(@@) % سحرته العيون سحر ابن محمو % % د بنفث البيان من أقلامه % % 9(@)(@@) % الرئيس الذي به غنى النا % % س عن الغيث وارتقاء غمامه % % 10(@)(@@) % وثقوا أن غدوا ضيوفا لابرا % % هيم أن النجاح حول مقامه % % PageV01P1730 11(@)(@@) % لم يقيسوا الحيا بجدواه لكن % % بشروه من الحيا بغلامه % % 12(@)(@@) % أكمل العالمين فضلا فما نس % % أل رب العباد غير دوامه % % 13(@)(@@) % أي حر لو لم تفضل ذووه % % لكفته في الفضل نفس عصامه % % 14(@)(@@) % وجواد لو لم يعم سخاه % % لحبا من صلاته وصيامه % % 15(@)(@@) % وبليغ لو قام أهل المعاني % % قال أسى من قولهم في منامه % % 16(@)(@@) % فاض فيض الغمام في الجوج لا قص % % د مديح الغنى ولا خوف ذامه % % 17(@)(@@) % وحمى الدين إذ سما فله الفض % % ل على كل سام دهر وحامه % % 18(@)(@@) % ما روى الناس في التواريخ قدما % مارووا للسماح في أيامه % % 19(@)(@@) % عد بالخنصر المقدم إذ أو % % ضح وجه البيان من إبهامه % % 20(@)(@@) % ودرى المدح عجزه عنه لكن % % خاف عنه الكتمان من آثامه % % PageV01P1731 21(@)(@@) % يا رئيسا نرجو به أدب الده % % ر لأنا نراه من خدامه % % 22(@)(@@) % دم هنيئا بألف صوم وفطر % مسعد في اقتباله وانصرامه % % 23(@)(@@) % من غدا طاهرا كطهرك فينا % % كان كل الشهور شهر صيامه % % 24(@)(@@) % أو غدا جائدا كجودك فينا % % كان كل الأوقات أعياد عامه % % 25(@)(@@) % فاز حر أمسيت مغزى رجاه % % وزمان أصبحت صدر منامه % % PageV01P1732 البحر : - 1(@)(@@) % بكيت ليلا بوجدي وهي تبتسم % % حتى تقايس منثور ومنتظم % % 2(@)(@@) % دمع يجاوب مسراه تبسمها % % كالروض يضحك حيث الغيث ينسجم % % 3(@)(@@) % لا كنت يا قلب كم تصبيك غانية % يعدي أخا اللحظ من ألحاظها السقم % % 4(@)(@@) % أحسن بها ظبية بالسفح تمنعها % % أسد الكماة لها من اسمها أجم % % 5(@)(@@) % عدمت لبي من وجد بها وكذا % % جفني فالآنم لا حلم ولا حلم % 6(@)(@@) % وأغيد لم أخف فيه الذنوب ولا % % جرى على خده من عارض قلم % 7(@)(@@) % يصان حتى كأن الخمر ما حرمت % % إلا لكيلا تحاكي ريقه الشيم % % 8(@)(@@) % ما اهتز كالغصن في أوراقه بردته % % إلا تساقط من أجفاني الغيم % 9(@)(@@) % كانت غواية قلبي في محبته % % مجهولة السبل لا هاد ولا علم % % 10(@)(@@) % يسلو الشجي ولفظي كله غزل % % ويستفيق وقلبي حشوه ألم % PageV01P1733 11(@)(@@) % فالحب عندي 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms344# وإن طال الملام به % % كالجود عند ابن صصري مشرع أمم % % 12(@)(@@) % حتى اذا صغت في قاضي القضاة حلا % % مدح تطهر فكر بارع وفم % 13(@)(@@) % أندى البرية والأنواء باخلة % % وأسبق الخلق والسادات تزدحم % % 14(@)(@@) % حبر تجاوز حد المدح من شرف % كالصبح لا غرة تحكى ولا رئم % % 15(@)(@@) % لكنها نفحات من مدائحه % % تكاد تحيي بها في رسمها الرمم % % 16(@)(@@) % مجود الهم للعلياء إذ عجزت % % عنها السراة وقالوا إنها قسم % % 17(@)(@@) % تصنعوا ليحاكوا صنع سؤدده % % ياشيب كم جهد ما قد يكتم الكتم % % 18(@)(@@) % يمضي الزمان وما خابت لديه يد % سعيا إلى المجد لازلت به قدم % % 19(@)(@@) % رام الأقاصي حتى حازها ومضى % % تبارك الله ماذا تبلغ الهمم % % 20(@)(@@) % لا يطرد المحل الاصوب نائله % % ولا يجول على أفكاره الندم % PageV01P1734 21(@)(@@) % في كل يوم ينادي جود راحته % % هذا فتى الندى لا ما دعى هرم % % 22(@)(@@) % يمم حماه ودافع كل معضلة % مهيبة الحرم تعلم أنه حرم % % 23(@)(@@) % واحسن ولاء أياديه فما سفلت % % عزيمة بولاء النجم تلتزم % % 24(@)(@@) % واسعد بمن حاطت الإسلام همته % % حتى تغاير فيها العلم والعلم % % 25(@)(@@) % نعم الملاذ لمن أودت به سنة % % شهباء آثارها في عينه حمم % % 26(@)(@@) % لو أن للدهر جزأ من محاسنه % % لم يبق في الدهر لا ظلم ولا ظلم % % 27(@)(@@) % قالت أياديه للقصاد عن كثب % ماأقرب المجد إلا أنها همم % % 28(@)(@@) % مما أناف به للمجد إن له % % عرفا يرى فرص الاحسان تغتنم % % 29(@)(@@) % والمجد لا تنثني يوما معالمه % % إلا اذا راح مبنى المال ينهدم % % 30(@)(@@) % وللسيادة معنى ليس يدركه % % من طالب الذكر إلا باحث فهم % PageV01P1735 31(@)(@@) % فليت كل بخيل ينثني بطرا % فداء نعل فتى أودى به الكرم % % 32(@)(@@) % تستشرف الأرض ما حلت مواطنه % % كأنما الوهد في آثاره أكم % % 33(@)(@@) % لمعشر هم لمن ولا هم نعم % هنيئة ولمن عاداهم نقم % 34(@)(@@) % تفرق المجد في الأحياء من قدم % والمجد في تغلب العلياء ملتئم % % 35(@)(@@) % الطاعنين وحر الحرب ملتهب % % والمطمعين وحر الجدب ملتهم % % 36(@)(@@) % والشائدين على كيوان بيت علا % تسعى النجوم بمغناه وتستلم % % 37(@)(@@) % من كل أروع سام طرف سؤدده % % أغر قد ناولته الراية البهم % 38(@)(@@) % مضوا وأحمد زاهي المجد مقتبل % % كالروض أقبل لما ولت الديم % % 39(@)(@@) % يا مانحي مننا من بعدها منن 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms345# % ما شأنها منك لا عي ولا سأم % 40(@)(@@) % ومظهرا لي في دهر يمجمج بي % % كأنما أنا حرف فيه مدغم % PageV01P1736 41(@)(@@) % شكرا لفضلك ما غنت مطوقة % % وما تتاوح غب الوابل السلم % % 42(@)(@@) % لله برك ما أحلى تكتمه % % في الخلق لو كان عرف المسك يكتتم % % 43(@)(@@) % وافى وقد حذر الحساد من حنق % أن يبصروه فلما أبصروه عموا % % 44(@)(@@) % وطالما كنت والأيام في رهج % فاليوم ألقى فيما بيننا السلم % % 45(@)(@@) % وفتية أنت أحظى من رجاي بها % % يفنى الثراء وتبقى هذه الكلم % % 46(@)(@@) % يا باغي المجد لا والله ما بلغت % % معشار سعيك هذي العرب والعجم % % 47(@)(@@) % وحسد خففت أحشاؤهم حنقا % % كأنها بيد الأحزان تلطم % 48(@)(@@) % أستهكم بثناء فيك غاظهم % غيظ البزاذين لما عضت اللجم % % 49(@)(@@) % أهواك للشيم اللاتي خصصت بها % % اذا تخيرت الأفعال والشيم % % 50(@)(@@) % ما زاد في قول واش غير طيب ثنا % كند يعبق حيث الجمربضطرم % % PageV01P1737 51(@)(@@) % حاشاك حاشاك أن تلقاك شائبة % وان تطرق في أفعالك التهم % % 52(@)(@@) % هم حدثوني فما صدقت ما نقلوا % % وأوهموني فما حققت ما زعموا % % 53(@)(@@) % فليهن مجدك إذ يعلو وقد سفلوا % % وليهن رأيك اذ يزكو وقد أثموا % % 54(@)(@@) % أما الشآم فقد أغنيت قاصده % % حتى اشتكتك الفلا والاينق الرسم % % 55(@)(@@) % لولاك للطائفين العاكفين به % % لم يبق ركن من النعمى وملتزم % % 56(@)(@@) % خذها عروسا وبكرا بنت ليلتها % % أسيلة الخد في عرنينها شمم % % 57(@)(@@) % لولا أياديك ما ضمت على أمل % يد ولم ينفتح لي بالثنآء فم % % 58(@)(@@) % نوعا من الشعر لا يدعى سواك له % % إن المدائح كالعليا لها قيم % % 59(@)(@@) % هوت إلى لثمه الافواه مسرعة % % كأنما كل ميم فيه مبتسم % % 60(@)(@@) % فهنأ الله عاف أنت نجعته % % وخائفا بك في اللأواء يعتصم % % PageV01P1738 61(@)(@@) % ليشكرنك مني الدهر أربعة % نفس وروح ولحم نابت ودم % % PageV01P1739 البحر : - 1(@)(@@) % رمى حشاي ويا شوقي إلى الرامي % % لحظ برامة من ألحاظ آرام % % 2(@)(@@) % رهنت في الحب نومي عند ناظره % % لما اقترضت لجسمي منه أسقامي % % 3(@)(@@) % أفدي الذي كنت عنه كاتما شجني % % حتى وشى نبت خديه بنمام % % 4(@)(@@) % ممنع الوصل كم حالمت من شغف % عداي فيه وكم عاديت أحلامي % % 5(@)(@@) % ظلمت خديه بالألحاظ أجرحها % % وحسن خديه ظلام لظلام % % 6(@)(@@) % وما لبست به من أدمعي خلعا % الا ووشي دمي 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms346# فيها كأعلام % % 7(@)(@@) % يا ليت شعري وقلبي فيه ممتحن % ما ذا على عذلي فيع ولوامي % % 8(@)(@@) % لا تخش من عاذل قد جا يحاورني % % يا سالبي في الهوى حلمي وأحلامي % % 9(@)(@@) % وحق عينيك مالي في محبتها % % سمع لعين ولا ذال ولا لام % % 10(@)(@@) % ولا لفكري من شمس ومن قمر % % سوى جبيني في صبحي وإظلامي % % PageV01P1740 11(@)(@@) % سقيا لمعهد أنس كان يسند لي % % بوجهه الطلق عن بشر ابن بسام % % 12(@)(@@) % حيث النسيم يجر الذيل من طرب % والزهر يرقص من عجب بأكمام % % 13(@)(@@) % والنهر طرس تخط الريح أسطره % % والقطر يتبع ما خطت بإعجام % % 14(@)(@@) % والكأس في يد ساقيها مصورة % % تضيء من حول كسرى ضوء بهرام % % 15(@)(@@) % قد أسرجت وعدت للهم ملجمة % % فهي الكميت باسراج وإلجام % % 16(@)(@@) % أنشئ بها العيش ينمو من محاسنه % % ما ليس يحصره الناشي ولا النامي % % 17(@)(@@) % وأجتلي كأسها والشمس ما جليت % % و لا ترشف منها الشرق في جام % % 18(@)(@@) % شهور وصل كساعات قد انقرضت % % بمن أحب وأعوام كأيام % % 19(@)(@@) % ولت كأني منها كنت في سنة % ثم انبرت لي أيام كأعوام % % 20(@)(@@) % مقلقلا بيد الأيام مضطربا % كأنما استسقت مني بأزلام % % PageV01P1741 21(@)(@@) % قد حرمت حالتي طيب الحياة بها % % كأن طيب حياتي طيب إحرام % % 22(@)(@@) % هي المقادير لا تنفك مقدمة % % وللحجى خطرات ذات إحجام % % 23(@)(@@) % أما ولي حالة عن مرة نقلت % % لأنقلن بها عن عزم همام % % 24(@)(@@) % ورب شائمة عزمي ومرتحلي % % إلى حمى مصر أشكو جفوة الشام % % 25(@)(@@) % قالت وراءك أطفال فقلت لها % % نعم ونعمى ابن فضل الله قدامي % % 26(@)(@@) % لولاعلي ابن فضل الله ما استبقت % % سفائن العيس في لج الفلا الطامي % % 27(@)(@@) % لعاقد خنصر المداح يوم ثنا % % وموضح الجود فيهم بعد إبهام % % 28(@)(@@) % رب السيادة في إرث ومكتسب % فيالها ذات أنواع وأقسام % % 29(@)(@@) % سد ياعلي بن يحيى كيف شئت فما % % في فرعك المجتنى والأصل من ذام % % 30(@)(@@) % وارفع إلى عمر إسناد بيتك في % % فضل وفصل وتقديم وإقدام % % PageV01P1742 31(@)(@@) % بيت تسامى إلى الفاروق منصبه % % فكاتبته العلى بالمنصب السامي % % 32(@)(@@) % منظم طاب حتى تم مفخره % % فكم إلى طيب يعزى وتمام % % 33(@)(@@) % إسم حروف المعالي فيه واضحة % % وكل عال سواكم حرف إدغام % % 34(@)(@@) % لو طاولتكم نجوم الأفق ما بلغت % % قوادم النسر منكم ترب أقدام 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms347# % % 35(@)(@@) % بأول الحال منكم أو بآخره % % يراكم الله تأييدا لإسلام % % 36(@)(@@) % إما بأرماح أقلام لكم عرفت % % لياقة الحد أو إرماح أقلام % % 37(@)(@@) % تحمون سرح الهدى بدأ ومختتما % وتنهضون بإنعام وإرغام % % 38(@)(@@) % منكم علي نماه للعلى عمر % فحبذا ثمرات المغرس النامي % % 39(@)(@@) % ندب سما وحمت ملكا براعته % % فذا له الناس من سام ومن حام % % 40(@)(@@) % محسن الخلق والأخلاق تألفه % % عقائل الفضل عن وجد وتهيام % % PageV01P1743 41(@)(@@) % من أجل ما عقد المداح خنصرهم % % عليه ميز من جلي نجا تام % % 42(@)(@@) % لا عيب فيه سوى علياء حالته % % عن صف ما شئت من عي وإفحام % % 43(@)(@@) % تدري سرائر نجوانا عوارفه % % إما بصائب فكر أو بإلهام % % 44(@)(@@) % لو أن للبحر جزأ من مكارمه % % ألقى على الطرق درا موجه الطامي % % 45(@)(@@) % جارى حياه بحار الأرض يوم ندى % % ويوم علم فروى غلة الظامي % % 46(@)(@@) % فالبحر يزبد من غيظ يخامره % % والبرق يضحك من عجز الحيا الهامي % % 47(@)(@@) % والعدل يغمض جفن السيف في دعة % % من بعد ما كان جفنا دمعه دامي % % 48(@)(@@) % أما الملوك فقد أغنى ممالكها % % تصميم منطقة عن حد صمصام % % 49(@)(@@) % ذو اللفظ علمت المصغي فصاحته % % قول المدائح فيه ذات إحكام % % 50(@)(@@) % فلو مزجت أباريق المدام به % % ما رجعت صوت فأفاء وتمتام % % PageV01P1744 51(@)(@@) % يا فاضلا لو رنت عين العماد له % % لبات يخفق رعبا برقه الشامي % % 52(@)(@@) % غطى ثناك على عبد الرحيم فما % % ترنو لأنجمه أبصار أفهام % % 53(@)(@@) % وقدج طوى نظمك الطائي منهزما % لما برزت بأطراس كأعلام % % 54(@)(@@) % ليخبر الملك في مناك عن قلم % صان الأقاليم عن تخبير مستام % % 55(@)(@@) % أشد من ألف في الكف يكرع من % % نون وأمنع يوم الروع من لام % % 56(@)(@@) % تغاير الوصف في يوم العطاء به % % والناس ما بين مطعان ومطعام % % 57(@)(@@) % وراثة لك يا ابن السابثقين علا % في بث مكرمة أو حسم آلام % % 58(@)(@@) % كأن أهل العلى جسم ذووك له % % هام وأنت يمين العين في الهام % % 59(@)(@@) % ان كنت في الوقت قد أوفيت آخرهم % % فانك العيد وافى آخر العام % % 60(@)(@@) % شكرا لأوقات عدل قد أنمت بها % % عين الرعايا فهم في طيب أحلام % % PageV01P1745 61(@)(@@) % وأنجم خدمت علياك فهي اذا % نعم الجواري التي تدعى بخدام % % 62(@)(@@) % أبحت يا صاحب السر النوال وقد % % منعت ما 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms348# خيف من ظلم وإظلام % % 63(@)(@@) % وأنجدتنا على الأمداح منك لهى % إلى الورى ذات إنجاد وإتهام % % 64(@)(@@) % خذها منظمة الأسلاك معجزة % % بالجوهر الفرد فيها كل نظام % % 65(@)(@@) % مصرية من بيوت الفضل ما عرفت % % فيها بنسبة جزار وحمام % % 66(@)(@@) % أنت الذي أنقذتني من يدي عدمي % % آلاؤه ومحت بالبر إعدامي % % 67(@)(@@) % فعش مع الدهر لا إبرام في سبب % % لما نقضت ولا نقض لابرام % % 68(@)(@@) % ودم لحمد وآلاء ملأت بها % % جهاتي الست من جاه وإنعام % % 69(@)(@@) % فواضل عن يميني والشمال ومن % % فوقي وتحتي ومن خلفي وقدامي % % PageV01P1746 البحر : - 1(@)(@@) % يدافعني الغيران عن طيب لثمها % % فيقنعني لثم التذكر لاسمها % % 2(@)(@@) % محجبة أبكي ليالي وصلها % % بشهبي وحمري وهي تبكي بدهمها % % 3(@)(@@) % بكيت بلوامي عليها وعذلي % % ولا وصل إلا بين وهمي ووهمها % % 4(@)(@@) % وصنو أب قد صان نقطة خالها % % فيا حربا من خالها ثم عمها % % 5(@)(@@) % ويا عجبا حيث اللآلي يتيمة % % بفيها وما يبدو بها ذل يتمها % % 6(@)(@@) % وحيث أرى من جفنها السهم قاتلا % وما غرضي إلا ملاقات سهمها % % 7(@)(@@) % بروحي من لا خارج غير ردفها % % ثقيلا ومن لا بارد غير ظلمها % % 8(@)(@@) % أما وجراحي خدها ثم أدمعي % % لقد وقعت عين المحب بجرمها % % 9(@)(@@) % ودر بكائي حين يبسم ثغرها % % لقد لاح فرق بين نثري ونظمها % % 10(@)(@@) % نأت فنأى عني الكرى وتغيبت % % فلا طيب أحلامي ولا فضل حلمها % % PageV01P1747 11(@)(@@) % وأفردت بالآلام فيها وقاسمت % % لواحظها ما بين سقمي وسقمها % % 12(@)(@@) % كأني ما نزهت طرفي ببيضة % % اليها ولا رويت قلبي بضمها % % 13(@)(@@) % و لا ظننا الواشون حرفا مشددا % لتوثيق جسمي في العناق وجسمها % % 14(@)(@@) % يداي على الحسناء قفل مؤكد % بآثار لثم مثل آثار ختمها % % 15(@)(@@) % زمان غوايات الصبابة والصبا % % أغر بنعماها وألهو لنعمها % % 16(@)(@@) % و ليل شباب أيقظ الشيب مقلتي % % لديه وكانت في غيابة حلمها % % 17(@)(@@) % و طاوعت نصاحي ويارب مأثم % % قضيت على رغم النهى قبل رغمها % % 18(@)(@@) % و ما الشيب الا كالحسام مجردا % لتعجيل أدواء الضلال لجسمها % % 19(@)(@@) % تبارك من أردى ضلالا برحمة % % وزين آفاق المعالي بنجمها % % 20(@)(@@) % إمام اذا عاينت سنة وجهه % % حكمت على تلك الفخار بعلمها % % PageV01P1748 21(@)(@@) % تهلل اذ طارحته بمدائحي % % تهلل وسمي البروق بوسمها % % 22(@)(@@) % حفي بطلاب الفضائل والندى % % فلله ما حي عيها بعد عدمها % % 23(@)(@@) % وفاصل 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms349# أحكام القضاء بفطنة % % كأن سرار الشهب من فتح فهمها % % 24(@)(@@) % اذا اختصم الأقوام ضاء بفكرة % % يقول ضياء الصبح لست بخصمها % % 25(@)(@@) % و لا عيب فيه غير إسراف أنعم % % ترى عزمها في الجود غاية غنمها % % 26(@)(@@) % يجانس بالفتوى الفتوة جائدا % ويعرب عن فصل الأمور بحزمها % % 27(@)(@@) % اذا زعماء القوم همت بشاؤه % % فقد طلبت شأو النجوم بزعمها % % 28(@)(@@) % فديناه ندبا زاد في شأو بيته % % اذا نقصت ذات البيوت بجرمها % % 29(@)(@@) % و قاضي القضاة تعرب الخلق مدحه % % فتعجز حتى عربها مثل عجمها % % 30(@)(@@) % فيمدحه حتى النسيم بعرفه % % وتصغى له حتى الجبال بصمها % % PageV01P1749 31(@)(@@) % له همة ان شئت غالية الثنا % % فشمها وإن شئت الفخار فشمها % % 32(@)(@@) % على حين مسود المفارق حالك % % فكيف اذا ضاء المشيب بفحمها % % 33(@)(@@) % و أقلام رشد يتبع الرشد خطها % % ويعمل أنواع الثناء برسمها % % 34(@)(@@) % يقيم على العادين حدا بحدها % % ويهدي إلى العافين عزا بعزمها % % 35(@)(@@) % و تكتب في حالي نداها وسطوها % % بدرياقها طورا وطورا بسمها % % 36(@)(@@) % مسددة المرمى مقسمة الحيا % % فلا زال للاسلام وافر سهمها % % 37(@)(@@) % بكف كريم يملأ العلم والقرى % % لديه قلوب الطالبين بشحمها % % 38(@)(@@) % فتى الدين والدنيا ينير ظلامها % % بكوكبها العالي ويلوي بظلها % % 39(@)(@@) % سليل عماد الدين انك بعده % % مصاعد ما هم الزمان بثلمها % % 40(@)(@@) % تطوف بمغناه وفود مقاصد % % محملة جدوى يديه لهمها % % PageV01P1750 41(@)(@@) % لتمكين رجواها وتأمين روعها % % وتأثيل نعماها وتفريج غمها % % 42(@)(@@) % فما الشهد أحلى من صنائع فضله % % ولا المسك أذكى من تضوع كتمها % % 43(@)(@@) % و ما روضة بالحزن مخضلة الربى % % مكاثرة زهر النجوم بنجمها % % 44(@)(@@) % يجر لديها عاطر الريح ذيله % % وتخطر فيها المزهرات بكمها % % 45(@)(@@) % بألطف من أخلاقه عند شيمها % % وأعطر من أخباره عند شمها % % 46(@)(@@) % لجأت اليه والحياة مريرة % % فعرفني إحسانه حلو طعمها % % 47(@)(@@) % و كنت على قصدي من الناس خائفا % فألقيته من راحتيه بيمها % % 48(@)(@@) % و ما هو إلا النجم جاورته فلا % % مخافة من كل العداة وكلمها % % 49(@)(@@) % أتمت حلا مرآه حلية حبره % % فلا عدمت منه العلى بدر تمها % % PageV01P1751 البحر : - 1(@)(@@) % إلى م بين العشق واللائمه % % خواطري شاعرة هائمه % % 2(@)(@@) % في كل ناد أصبحت صبوتي % % ناثرة ودمع عيني ناظمه % % 3(@)(@@) % مفطر المهجة في حب من % % عيني عن النوم بها صائمه % % 4(@)(@@) % يسوم سعر الوصل 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms350# من سامه % لو ترع في الحب لها سائمه % % 5(@)(@@) % وأهيف كالرمح أعطافه % % عادلة مع أنها ظالمة % % 6(@)(@@) % تلوم في ناعس أجفانه % % لائمة عن صبوتي نائمه % % 7(@)(@@) % كمثل ما لامت بها في التقى % % في الجود بعض النية الراغمة % % 8(@)(@@) % أوفى الورى علما وأسماهم % % إلى العلى عزما وأبهى سمه % % 9(@)(@@) % ذو الأصل والفرع له نسبة % % جليسة في دستها قائمه % % 10(@)(@@) % فريد وقت بفريد الثنا % % قد جليت أوقاته الباسمه % % PageV01P1752 11(@)(@@) % سبكية التبر سبيكية % % أوصافه في المدح في اللازمة % % 12(@)(@@) % لله ما أغناه في حالتي % % جدوى وفتوى للعلى قاسمه % % 13(@)(@@) % كلتاهما للطالبي غوثة % % في الفقه والجهل يد حاسمه % % 14(@)(@@) % أقلامنا في طرس إمداحه % % تجرها جارية خادمه % % 15(@)(@@) % دنيا وأخرى كلمت ذاته % % فحبذا المبدأ والخاتمه % % 16(@)(@@) % أبا البقا هنئت طول البقا % % بنعمة سابغة دائمه % % 17(@)(@@) % و سؤدد مكنت أسبابه % % بعزمه عاملة عالمه % % 18(@)(@@) % و وصلة زاكية بالرفا % % وبالبنين ابتدرت باسمه % % 19(@)(@@) % رقت على زاهر افق الهدى % % زهراء في أنجمها الناجمه % % 20(@)(@@) % عقيلة الأنصار حكامهم % % لا برحت علياهم حاكمه % % PageV01P1753 21(@)(@@) % نبت علي بعلا قومها % % تعيش أجسادهم فاطمه % % 22(@)(@@) % رافعة في ظلهم بيتها % % بكسر أعدائهم جازمه % % PageV01P1754 البحر : - 1(@)(@@) % مدمع سائل لغير رحيم % واعنائي من سائل محروم % % 2(@)(@@) % ونثار من البكى مستفاض % % في الهوى من لقاء ثغر نظيم % % 3(@)(@@) % صادق الخد واستحم به الجس % % م فآها من الصديق الحميم % % 4(@)(@@) % ليت شعري أهكذا كل صب % أم كذا حال حظي المقسوم % % 5(@)(@@) % يجرح القلب وهو عدل عن الح % % ب ويقضي الغرام وهو غريمي % % 6(@)(@@) % حربي من مهفهف القد ألمى % % أوقع القلب في العذاب الأليم % % 7(@)(@@) % قائم الخصرقاعد الدف أمري % % فيه ما بين مقعد ومقيم % % 8(@)(@@) % وعده مثل خصره من جفاء % باطني يقول بالمعدوم % % 9(@)(@@) % لي على روض خده كل يوم % أدمع مستهلة كالغيوم % % 10(@)(@@) % لا تلم عاشقا بكى بعد روض % كبكاء الوليد بعد نسيم % % PageV01P1755 11(@)(@@) % حطم الوجد ركن دمعي وطافت % % لوعتي بين زمزم والحطيم % % 12(@)(@@) % ورمتني من العيون سهام % ذات نصل كما ترى مسموم % % 13(@)(@@) % بين مرئى فم وطرة شعر % % فهي لاشك بين سين وميم % % 14(@)(@@) % يالها من سهام لحظ كستني % % برد سقم محرر التسهيم % % 15(@)(@@) % و فم بارد المراشف لكن % % كبدي منه في سواء الجحيم % % 16(@)(@@) % برخيم الألفاظ صير حظي % % مثل حظ 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms351# الاسماء بالترخيم % % 17(@)(@@) % ودجى طرة تسلمت القل % % ب فأمسى منها بليل السليم % % 18(@)(@@) % ذات صدغ دناله مسك خال % % فحسبناه نقطة تحت جيم % % 19(@)(@@) % و رقيم من العذار ثناني % % ساهرا طول ليلتي بالرقيم % % 20(@)(@@) % خط ريحانه على ماء خد % % كاد يجري في نضرة ونعيم % % PageV01P1756 21(@)(@@) % ما تذكرت ذا وهذاك إلا % % بت بين المشروب والمشموم % % 22(@)(@@) % رب ليل قد همت فيه بظبي % % قربه لي أشهى من التهويم % % 23(@)(@@) % باللمى والطلا سعى فسقاني % % من كلا الساعيين بالخرطوم % % 24(@)(@@) % حيث وجه الزمان عندي هش % % ونبات الشباب غير هشيم % % 25(@)(@@) % يا زمان الصبا سقتك الغوادي % % أين كأسي وروضتي ونديمي % % 26(@)(@@) % عن جمال الوجوه قصر شجوي % % وثنائي يهوى جمال العلوم % % 27(@)(@@) % سيد وابن سيد هام حمدي % % فيهما بالكريم وابن الكريم % % 28(@)(@@) % و إمام محراب أفكاره الطر % % س وكل الأنام مثل الأميم % % 29(@)(@@) % بشروا بيته الذي طال قدرا % بغلام في العالمين عليم % % 30(@)(@@) % ذو كلام تجمع الجوهر الفا % % خر فيه وذل قدر اليتيم % % PageV01P1757 31(@)(@@) % أين عبد الحميد من نثره الجز % % ل الذي كساه ثوب الذميم % % 32(@)(@@) % أين نظم السعيد منه ومن قو % % ة ما خطه ابن العديم % % 33(@)(@@) % ذاك خط أغضى ابن مقلة عنه % % يوم فخر اغضاء غير حليم % % 34(@)(@@) % زاحف بين أسطر وطروس % % لسطا عسكرين زنج وروم % % 35(@)(@@) % صغت لي من حلاك يا ابن علي % % طوق مجد على الفخار مقيم % % 36(@)(@@) % و أدارت يمناك لي كأس درج % % كان فيها المزاج من تسنيم % % 37(@)(@@) % يلتقيها لفظ المصلين عجبا % ويمدون راحة التسليم % % 38(@)(@@) % ليس فيها عيب سوى أنني بال % % عجز عنها شكوت شكوى الظليم % % 39(@)(@@) % حين ولى زمان لفظي وجفت % % أيكتي وانثنى هبوب نسيمي % % 40(@)(@@) % و رأيت الألفاظ أولاد فكر % % نفرتها عني وجوه همومي % % PageV01P1758 41(@)(@@) % فغدا الفكر في التغابن عجزا % وهي عنه في غاية التحريم % % 42(@)(@@) % نقصت قوتي عن المدح فاصفح % % في نظامي عن خجلة التتميم % % 43(@)(@@) % واكتم السر عن معائب فاهت % % فسروري في سرها المكتوم % % PageV01P1759 البحر : - 1(@)(@@) % ربع لعزة صامت لا يفهم % % وقلوبنا في رسمه تتكلم % % 2(@)(@@) % لو لم تعف حماه غر سحائب % % تهمى لعفته مدامع تسجم % % 3(@)(@@) % وعلى البكى فلقد يروق كأنما % % قطع الغمام عليه برد معلم % % 4(@)(@@) % ما أنس كم ليل عليه قطعته % % بالوصل تعذرني عليه 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms352# اللوم % % 5(@)(@@) % حيث المجرة فيه مثل سبيكة % % قد جربت فالبدر منها درهم % % 6(@)(@@) % وضجيعتي خود بحكم جفائها % % ولقائها يشقى المحب وينعم % % 7(@)(@@) % حوراء الا أنها قد أسكنت % % قلبي الذي تبلته وهو جهنم % % 8(@)(@@) % لو لم تكن روضا لما كانت اذا % % هطلت غيوث مدامعي تتبسم % % 9(@)(@@) % يا قلب هذا شعرها وجفونها % % فاصبر اذا زحف السواد الأعظم % % 10(@)(@@) % ما الشمس أشرف بهجة منها ولا % % صوب السحائب من علي أكرم % % PageV01P1760 11(@)(@@) % بحر تعلمنا المديح صفاته % % فعقوده منه عليه تنظم % % 12(@)(@@) % متيقظ الآراء تحسب أنه % % كل الأمور لديه غيبا يعلم % % 13(@)(@@) % ومسدد الحركات ينهل الندى % % وتخيم العلياء حيث يخيم % % 14(@)(@@) % جزل العطاء والبأس حين خبرته % % كالسيف حين يروق ثم يصمم % % 15(@)(@@) % تجني فيحلم بعد ما جاورته % % حتى تظن لديه أنك تحلم % % 16(@)(@@) % رفق كما انحلت خيوط غمامه % % فإذا سطا نزل القضاء المبرم % % 17(@)(@@) % نطق الزمان به وكل مفاخر % % كلم على لسن الزمان مجمجم % % 18(@)(@@) % إنظر لحبوته وأنعمه تجد % % من جانبي رضوى سيولا تفعم % % 19(@)(@@) % لا عيب فيه سوى تسلط جوده % % فالمال من نفحاته يتظلم % % 20(@)(@@) % لله ما بلغت مساعيه وما % % جمعت من المجد الذي لا يرغم % % PageV01P1761 21(@)(@@) % كرم تصلي السحب خلف صلاته % % لكنها للعجز عنه تسلم % % 22(@)(@@) % وثنا يقيد بالمدائح ذكره % % فتراه ينجد في البلاد ويتهم % % 23(@)(@@) % عبق الشذا تحكيه زهر كمائم % % في الروض الا أنها تتكلم % % 24(@)(@@) % وفضائل لذت وعز مرامها % % فكأنها شهد يذاق وعلقم % % 25(@)(@@) % من كل ساجعة السطور كأنما % % همزاتها ورق بها تترنم % % 26(@)(@@) % وقصيدة غراء تعلم أنه % % قد غادر الشعراء ما يتردم % % 27(@)(@@) % وتواضع كالشمس دان ضوءها % % والقدر أرفع أن ينال ويكرم % % 28(@)(@@) % يممه يا راجيه تلق خلاله % % تسدي بها حلل الثناء وترقم % % 29(@)(@@) % يرجى فيعطي فوق كل رغيبة % % وتطيش ألباب الرجال فيحلم % % 30(@)(@@) % واذا دعى الداعي نزال وجدته % % بالرأي يطعن واليراع فيهزم % % PageV01P1762 31(@)(@@) % قلم له في كل يوم كريهة % % أنباء يجري في جوانبها الدم % % 32(@)(@@) % نادى سواد النفس لما أفصحت % % كلماته أنا عبد من يتفهم % % 33(@)(@@) % و جرت بحكمته يد من تحتها % % أبدا يد من فوقها ابدا فم % % 34(@)(@@) % يا ابن الذين لهم سنا بهر الورى % % وعلا نبجل ذكرها ونعظم % % 35(@)(@@) % شرف ولكن بالهلال متوج % % فوق السماء وبالسماك مخيم % % 36(@)(@@) % يفدي 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms353# ربيع نداك مثر كفه % % أبدا جمادى أو نداه محرم % % 37(@)(@@) % قرم يعيس للمديح اذا شدا % % فكانه عند المديح مذمم % % 38(@)(@@) % أنت الذي لجأت اليه مدائحي % % أيام لا وزر ولا مستعصم % % 39(@)(@@) % اغنيتني عمن إذ مدح امرؤ % % لم يفرحوا واذا هجا لم يألموا % % 40(@)(@@) % خذها اليك بديهة عربية % % ما نال غايتها زياد الاعجم % % PageV01P1763 41(@)(@@) % شاب الوليد لعجزه عن مثلها % % وارتد عن نظم القوافي مسلم % % PageV01P1764 البحر : - 1(@)(@@) % قوامك تحت شعرك يا أمامه % % لحسنك حامل علم الإمامة % % 2(@)(@@) % أما وصراط فرق مستقيم % لقد قامت علي به القيامة % % 3(@)(@@) % بروحي منك قدا هز رمحا % فسل الجفن أيضا لي حسامه % % 4(@)(@@) % وخد شاهد بدمي والا % % بأن وراه من ريق مدامه % % 5(@)(@@) % يشف من الاضاءة عن رحيق % تخال الخال من مسك ختامه % % 6(@)(@@) % تأخر يا غلام وخل خالا % ينادمني على خد الغلامه % % 7(@)(@@) % لشامته يقول اذا أديرت % % علي مدام ريقته بشامه % % 8(@)(@@) % ألذ بظلمها لي حيث لذت % % به فأفر من كشف الظلامه % % 9(@)(@@) % إلى أسد لها نسب ولكن % % محاسنها إلى آرام رامه % % 10(@)(@@) % أطعت بها الغواية والتصابي % % وعاصيت النصيحة والملامه % % PageV01P1765 11(@)(@@) % و قلت لعاذلي لا كيد يمشي % % لمثلك في هواي ولا كرامه % % 12(@)(@@) % زمان اللهو مبرور اليالي % % ووجه الأنس وضاح الغمامه % % 13(@)(@@) % و رب حمامة سجعت فهاجت % % خفايا مهجة لي مستهامه % % 14(@)(@@) % فما ورق الحمامة حين أبدت % % خفا شجني سوى زرق اليمامه % % 15(@)(@@) % لقد حاكيتها وجدا وحيدا % عليه لحلية النعمى وسامه % % 16(@)(@@) % فما يبلى جواي ولا أنادي % % علي لي ولا طوق الحمامه % % 17(@)(@@) % سقى دنيا علي كما سقاني % % فواصل كفه صوب الغمامه % % 18(@)(@@) % وزير ماترى الفضل بن يحيى % % سواه ولا الحسين ولا قدامه % % 19(@)(@@) % عيان الفضل دع خبر ابن قيس % % ورأس الجودع كعب بن مامه % % 20(@)(@@) % تعالى الله ما أندى حياه % % لدى رجوى وما أوفى ذمامه % % PageV01P1766 21(@)(@@) % بدتا ويد الزمان قد استطالت % % فأخمد ظلمه ومحا ظلامه % % 22(@)(@@) % ووفى الملك ما شرطت عليه % % تكاليف الكفالة والزعامه % % 23(@)(@@) % وداعي الجود يروي عن رباح % وداعي اليأس يروي عن أسامه % % 24(@)(@@) % وكأس الحمد في يمناه يملا % % بممزوج اللطافة والشهامه % % 25(@)(@@) % وملك صلاح دين الله يزهو % % بأفضل فاضل فيه اقامه % % 26(@)(@@) % فأما أصله فإلى قريش % وأما سره فالى كتامه % % 27(@)(@@) % له قلم تقسم 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms354# ريقتاه % % شهاد فم المحاول أو سمامه % % 28(@)(@@) % مكين في الندى والبأس إما % % لهام في المصالح أو لهامه % % 29(@)(@@) % وما اللامات تحمي الجيش إلا % % إذا ما خط فوق الطرس لامه % % 30(@)(@@) % ومالروض النضير له نظير % % إذا أدراجه مزجت كلامه % % PageV01P1767 31(@)(@@) % وما الدر اليتيم ربيب بيت % % إذا لم يعتمد يوما نظامه % % 32(@)(@@) % علاء الدين ما أشهى للثمي % % ثرى قدميك أجعله لثامه % % 33(@)(@@) % أتيت الشام بعد سنين جدب % فكان العام حين أغثت عامه % % 34(@)(@@) % وواليت الندى مالا وجاها % إلى أن جانس الكرم الكرامه % % 35(@)(@@) % وعدت عزيز مصر وكل مصر % سعيدا في الترحل والاقامه % % 36(@)(@@) % وقالوا سار قلبك يوم سارت % % ركائبه فقلت مع السلامه % % 37(@)(@@) % ففي دار البوار الآن شخصي % % وقلبي الآن في دار المقامه % % 38(@)(@@) % اليك أبو الخلائف من قريش % % سؤال سامه أملي وحامه % % 39(@)(@@) % أذكر جودك الوعد المبدا % % وقد أخمدت من سغبي ضرامه % % 40(@)(@@) % جعلت الجسم مني بيت لحم % وزدت وظائفي أيضا قمامه % % PageV01P1768 41(@)(@@) % وما أدري أتوقيعي بمصر % وإلا بالشآم فلن أسامه % % 42(@)(@@) % إلى التوقيع قد طرب استماعي % % وحار دقيق فكري في العلامه % % PageV01P1769 البحر : - 1(@)(@@) % تفهمه قلبي الشجي فهاما % % ولم يره طرف الغبي فلاما % % 2(@)(@@) % وعرفني بالحب في خد عارض % بدا ألفا ثم استدار فلاما % % 3(@)(@@) % بوحي رشيق المقلتين إذا رنا % % رمى في فؤاد المستهام سهاما % % 4(@)(@@) % جعلت دموع العين جارية له % % وصيرت قلبي في هواه غلاما % % 5(@)(@@) % من الغيد حسبي ورد خديه نزهة % % وريقته يا حسرتاه مداما % % 6(@)(@@) % يقول حلال خمر ريقي وليته % % سقاني به كأسا وكان حراما % % 7(@)(@@) % لئن تم عشقي في ملاحته لقد % % تعشثقت بدرا في الملاح تماما % % 8(@)(@@) % وعذبني ذاك المليح بناره % % فكان عذاب القلب فيه غراما % % 9(@)(@@) % ووالله لا أصغيت فيه لعاذل % % ولو ذاب جسمي لوعة وسقاما % % 10(@)(@@) % سأزداد في الحب انتسابا لعامر % إلى أن أزيد العاذلين ملاما % % PageV01P1770 11(@)(@@) % يقولون أعدتك السقام جفونه % % فقلت ومن أعدى الجفون سقاما % % 12(@)(@@) % ومن مزج الغصن الرطيب بعطفه % % فكان مزاج المعطفين قواما % % 13(@)(@@) % تناوحت العشاق إذ ماس قده اذا خاطبتني في هواه عواذلي مضيت على حالي وقلت سلاما % % فيا لك غصنا في الهوى وحماماسقط بيت ص % % 14(@)(@@) % كما خاطب العذال جود محمد % فأعرض عنهم واستهل غماما % % 15(@)(@@) % رئيس على التحقيق قالت 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms355# صفاته % % لنقاده ذا ما يخالط ذاما % % 16(@)(@@) % سمونا لمدح المفضلين وإنما % % لأمثاله في الفضل لن يتسامى % % 17(@)(@@) % وألت معانينا إلى مسك ذكره % % فكانت لذكر الأكرمين ختاما % % 18(@)(@@) % أخو العلم والتقوى تقدم فيهما % % فكان أمرا للمعتقين إماما % % 19(@)(@@) % يقضون للملك النهار فان دجى % % مسا الليل باتوا سجدا وقياما % % 20(@)(@@) % وأضحى لسر الملك صدرا قد انتقى % % له مستقرا في الورى ومقاما % % PageV01P1771 21(@)(@@) % سقى الغيث مثوى الصاحب الشرف الذي % % عهدنا به عهد النوال ركاما % % 22(@)(@@) % وغر المعالي أخجلت كل سالف % من القوم كانوا للأمور قواما % % 23(@)(@@) % تنادي نظام الملك أسلاك فضله % % إليك فما كل النظام نظاما % % 24(@)(@@) % لنعم الفتى أبقى لروض نباته % % شميما وأوهى الدهر منه شماما % % 25(@)(@@) % ونعم سبيل المكرمات محمد % % اذا ما ذكرنا ناسلا وإذا ما % % 26(@)(@@) % بدا مثل ما يبدو الصباح فخاره % % فزيل من ظلم الزمان ظلاما % % 27(@)(@@) % وعال باذن الله أبناء آدم % % وحام بأفاق الفخار وساما % % 28(@)(@@) % بليغ الندى والنطق تلقاه فيهما % % فريدا وتلقى المكرمات نواما % % 29(@)(@@) % له قلم ان ماس كان لمعتف % حياة وإلا للعدو حماما % % 30(@)(@@) % يمج شهادا تارة لوليه % % ووقتا لشانيه يمج سماما % % PageV01P1772 31(@)(@@) % قرين الفتاوى والفتوة لم يذق % % بليل مداد بين ذاك مناما % % 32(@)(@@) % تسهد في حفظ الممالك جفنة % % وفي كل جفن قد أنام حساما % % 33(@)(@@) % بكف كريم الراحتين مؤمل % % فيا لك برقا في الندى وغماما % % 34(@)(@@) % ويا لك في النطق البليغ قدامة % % وفي طيران الذكر عنه قداما % % 35(@)(@@) % شكوت له ظلم الزمان وانما % % إلى سيد بر شكوت غلاما % % 36(@)(@@) % فرد الزمان الجهم عني خاضعا % فتى ليس غيم الظن فيه جهاما % % 37(@)(@@) % وجدد من جدواه مالا نسيته % % ولم يبق من عند الزمان مراما % % 38(@)(@@) % وألبسني بيضاء رد ضياؤها % % لدى حاسد حتى استحال ضراما % % 39(@)(@@) % أمد يدي في كل يوم لذيلها % % فآخذ من جور الشتاء ذماما % % 40(@)(@@) % ومذ علقت منها بناني بعروة % شددت لطرف القول فيه حزاما % % PageV01P1773 41(@)(@@) % فلا زال ممدوحا اذا ما وصفته % % زحمت المعاني المائلات زحاما % % 42(@)(@@) % أولد مع فقد الصبا جوهر الثنا % % يتيما وأولاد الشيوخ يتامى % % PageV01P1774 البحر : - 1(@)(@@) % قدوم كما حيي قدوم غمام % % وعود إلى الأوطان عود حسام % % 2(@)(@@) % فهذا على الرواد أكرم حاتم % % وهذا على الاسلام خير محامي % % 3(@)(@@) % لك الله من 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms356# سار إلى أرب سرى % % هلال إلى أن غار بدر تمام % % 4(@)(@@) % دعاك إلى أرض الحطيم تذكر % % وغيرك مشغول الهوى بحطام % % 5(@)(@@) % فلله وفر من حلال بذلته % % على بلد زاكي المحل حرام % % 6(@)(@@) % وما هي إلا همة تغلبية % % تروم من العلياء كل مرام % % 7(@)(@@) % حوت أمد الدنيا من المجد وانبرت % % تشق إلى الأخرى صنوف زحام % % 8(@)(@@) % وما ضر ركبا كنت نجعة أهله % % تعذر زاد أو صروف غمام % % 9(@)(@@) % فوالله ما برق البشاشة خلب % لديك ولا غيم الندى بجهام % % 10(@)(@@) % يطوف بك الحجاج في كل منزل % اذا ذعرتهم سحبه بفطام % % PageV01P1775 11(@)(@@) % كأنهم قبل الوصول تعجلوا % % طوافهم في كعبة ومقام % % 12(@)(@@) % اذا ذكروا الركن اليماني يمموا % % مواهب ركن للعفاة شآمي % % 13(@)(@@) % كريم الثنا يجدي الركاب كأنه % % لنفحته قد حل دار سلام % % 14(@)(@@) % لقد ظفرت منكم قسي ظهورها % % لدى عرض البيدا بخير سهام % % 15(@)(@@) % وأحسن بها حيث الزمان يروعها % % نشاطا كأن النصل ثني زمام % % 16(@)(@@) % تمد جناحي ظلها في هجيرة % فتحسبها في البيد خيط نعام % % 17(@)(@@) % اذا خلعت وجه الفلا بمناسم % تفاءل حاديها بنيل مرام % % 18(@)(@@) % إلى أن أتت أرض المقام كأنها % % من البشر فيها بشرت بمقام % % 19(@)(@@) % ويمم هاتيك المناسك أروع % تهم على أعطافه بسلام % % 20(@)(@@) % إذا هو ولى قبلة البيت وجهه % فيا فضل محراب وفضل إمام % % PageV01P1776 21(@)(@@) % حلفت بما ضم المحصب والصفا % % وبالبدن في لباتهن دوامي % % 22(@)(@@) % لطابت على علياه طيبة دوره % % غدت لمساعي حجه كختام % % 23(@)(@@) % وجئت جلال المصطفى منك قائما % بشرعته الغراء خير قيام % % 24(@)(@@) % وعدت إلى الأوطان مقتبل الهنا % % يمد اليك السعي رأس غلام % % 25(@)(@@) % وشرفت أرضا قد وطئت كأنما % % وهاد الشرى منها فروع أكام % % 26(@)(@@) % وتشرح أرض الشام فيك غرامها % % بضعف نسيم أو حنين حمام % % 27(@)(@@) % وما أرقت حتى سريت كأنما % % مقامك فيها كان طيف منام % % 28(@)(@@) % بقيت على أولاد آدم منعما % وعن كل سام قد علوت وحام % % PageV01P1777 البحر : - 1(@)(@@) % أعيذ ريم الترك بالروم % % والصدغ مع فيه بحاميم % % 2(@)(@@) % ميم فم يسكرني ذكره % % فيالها سكرة خرطوم % % 3(@)(@@) % وجاء صدغ قد تأملتها % % فيا لها بالخال من جيم % % 4(@)(@@) % وناعس الاجفان ما هم في % % هواه لي جفن بتهويم % % 5(@)(@@) % كلم قلبي وسماعي فما % % ألذ في الحالين تكليمي % % 6(@)(@@) % يا سقمي من 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms357# سقم أجفانه % % زدني ويا لائمتي لومي % % 7(@)(@@) % تسنمي سمعي ثم اجعلي % % مزاج ذكراه بتسنيم % % 8(@)(@@) % قبلة ذاك الوجه في مثلها % % صلاة أشجاني وتسليمي % % 9(@)(@@) % وخده المشرق قد صح في % % عذاره المعوج تقويمي % % 10(@)(@@) % ما عمل في الحب خاف على % % كتاب حسن فيه مرقوم % % PageV01P1778 11(@)(@@) % قد رسم الحسن عليه فما % % أقرأه إلا بمرسوم % % 12(@)(@@) % كم لثمة لي فيه قد عجلت % % سكري بمشمول ومشموم % % 13(@)(@@) % و ضمة للقد كم قابلت % % منصوب أشواقي بمضموم % % 14(@)(@@) % حتى اذا الشيب تلثمه % % ودعت مضمومي وملثومي % % 15(@)(@@) % و عارض الباسم لما نأى % % منثور أجفاني بمنظوم % % 16(@)(@@) % يا زمن الوصل سقاك الحيا % % ودمع أشواقي بمركوم % % 17(@)(@@) % ما كنت الا بارقا أتبعت % % عقباه من دمعي بمسجوم % % 18(@)(@@) % أين سهام العيش مقسومة % % وأين في الألفاظ تسهيمي % % 19(@)(@@) % و أين اوطان الغنى والهنا % % وأين إقدامي وتقديمي % % 20(@)(@@) % و أين لا أين بلى أشرقت % % نجوم سعدي قبل تنجيمي % % PageV01P1779 21(@)(@@) % نعم وهذا خادمي اليمن قد % % أقبل اذ أقبل مخدومي % % 22(@)(@@) % حل علي بجسمي خائف % % فحل أمن بعد تحريم % % 23(@)(@@) % و يمم الشام فأغصانه % % أنامل نحو الهنا تومي % % 24(@)(@@) % و قلت إيه يا رجائي إلى % % ذي كرم يلفى وتكريم % % 25(@)(@@) % إلى حيا جاء إلى رائد % % فالآن تروى غلة الهيم % % 26(@)(@@) % إلى علي الاسم والفعل وال % % ألفاظ والرتبة والحيم % % 27(@)(@@) % ذو كوم ما هو الا القنا % % مركوزة حول الأقاليم % % 28(@)(@@) % ساع بتتويج ملوك الهدى % % وباسط البر بتعميم % % 29(@)(@@) % في راحة الجود تعبانة % % بنائل في الخلق مقسوم % % 30(@)(@@) % تمنى بليغ فهم الملك من % % جدوى عليه خير مفهوم % % PageV01P1780 31(@)(@@) % دان لنا وهو بعلياء لا % % يرقى اليها بالسلاليم % % 32(@)(@@) % كأنما ألفاظه جنة % % تجل عن لغو وتأثيم % % 33(@)(@@) % كأنما طلعته نير بد % % ر الدجى منها كملطوم % % 34(@)(@@) % لا عيب فيه غير نفس لها % % في جمع مجد حرص منهوم % % 35(@)(@@) % يقول رائيه إمداحه % % حومى على أفق العلى حومي % % 36(@)(@@) % و فطري إكباد أنداده % % وعن سوى إمداده صومي % % 37(@)(@@) % كل مسمى كرم حازه % % بكافه والراء والميم % % 38(@)(@@) % لولا ابن فضل الله ما استجمعت % % فرائد الفضل لتنظيم % % 39(@)(@@) % ينمي به المدح إلى أسرة % مادهر داعيهم بمذموم % % 40(@)(@@) % عن عمر الفاروق يروونه % % تراث تمجيد وتعظيم % % PageV01P1781 41(@)(@@) % ناهيك منهم بامام مضى % % وقائل بالعدل مأموم % % 42(@)(@@) % مثل إمام عادل قبله % % من 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms358# درك الادناس معصوم % % 43(@)(@@) % يا ابن الأولى تخلق مداحهم % % من مسك ذكراهم بمختوم % % 44(@)(@@) % يا كاسرا بالرأي جيش العدى % % تكسير ماضي الفعل مجزوم % % 45(@)(@@) % يا صاحب السر وفي ذكره % % للمسك سر غير مكتوم % % 46(@)(@@) % عطفا على ميت من الفقر قد % % أصبح في حالة مرحوم % % 47(@)(@@) % منطبخ الاحشاء بالهم لا % % يزال في حلة مغموم % % 48(@)(@@) % قد أفسدت فاقته ذهنه % % فهو معافى مثل محموم % % 49(@)(@@) % راتبه مجهول أمر وما % % معلومه أيضا بمعلوم % % 50(@)(@@) % يسري برجليه سرى سائل % % بسائل للدمع محروم % % PageV01P1782 51(@)(@@) % و ربما جاع على أنه % % في همة في زي مطعوم % % 52(@)(@@) % و البعد عن بابكم ظالم % % وهذه قصة مظلوم % % 53(@)(@@) % لا زلت ملثوم الثرى شائدا % % أركان مجد غير مثلوم % % 54(@)(@@) % في الصوم والفطر أخا غبطة % % وموسم بالعز موسوم % % PageV01P1783 البحر : - 1(@)(@@) % الحمد لله على إنعامه % % واصل للدين فضل حكامه % % 2(@)(@@) % من والد في العلى ومن ولد % قد جاء عن علمه وأعلامه % % 3(@)(@@) % لو لم يكن في علومه ملكا % ما زيد تاجا شعار أيامه % % 4(@)(@@) % مراتب الشرع أو علائمه % % قد توجت باسمه وأقلامه % % 5(@)(@@) % ليت العلائي تاج مصر رأى % % ذا التاج في مصر وفي شامه % % 6(@)(@@) % مكلل الوصف بالفرائد من % % صاغة حلى القريض نظامه % % 7(@)(@@) % وابن علي عال لنجم سما % % فهو على الأفق تاج بهرامه % % 8(@)(@@) % عربي محض العلى عمائمه % % تيجان أخواله وأعمامه % % 9(@)(@@) % ينفح عن راحتيه نشر ندى % % كأنما الزهر حشو أكمامه % % 10(@)(@@) % ذو البيت حج الرجا اليه ومن % % عسفان دهر ميقات إحرامه % % PageV01P1784 11(@)(@@) % إلى حمى علمه وأنعمه % % لكل سامي الطلاب مستامه % % 12(@)(@@) % لطالب الجود ملء رغبته % % وطالب العلم ملء أفهامه % % 13(@)(@@) % و شائع الاسم عند خنصره % % وسامع الفضل عند ابهامه % % 14(@)(@@) % حسبك بيت الانصار تبصر من % % دعا لنصر قديم إقدامه % % 15(@)(@@) % عبية خير الورى التي سلمت % % من بيت ذي قولة ومن ذامه % % 16(@)(@@) % أقلام أثباتهم كأنصلهم % % حمى لدين الهدى واسلامه % % 17(@)(@@) % علي يا ذا الفقار من قلم % % يقد قد العادي بأرغامه % % 18(@)(@@) % دم واحدا للعلوم يعجبه % % من التصانيف أنس أحلامه % % 19(@)(@@) % تسخو لنا بالعيان وابن دقي % % ق العيد طيف يسخو بألمامه % % 20(@)(@@) % مباركا حيث كان حامله % % عيون غيد فتور إسقامه % % PageV01P1785 21(@)(@@) % في كل يوم له وليل دجى % % سباق صوامه وإقدامه % % 22(@)(@@) % كأن جنح الدجى يمد 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms359# يدا % من الثريا للمس أقدامه % % 23(@)(@@) % نعم وهنئت دهر سيدنا % % قاضي قضاة الزمان حكامه % % 24(@)(@@) % مثلك في نسكه وسؤدده % % مطهر في جميع أقسامه % % 25(@)(@@) % أحكامه الزهر وهي واصلة % % بالحق أيدي أسباب إعظامه % % 26(@)(@@) % الله وهاب عبده شرفا % وفره فيه قسم قسامه % % 27(@)(@@) % و أسرة جانسوا اذا حكموا % % إكراه عدل القضا بإكرامه % % 28(@)(@@) % يا آل سبك الخلاص مجدهم % % نطقتم الشعر بعد إفحامه % % 29(@)(@@) % أحلامكم قد زكت وحاسدكم % % بين كرى همه وأوهامه % % 30(@)(@@) % نام وسرتم شتان حينئذ % % ما بين أحلامكم وأحلامه % % PageV01P1786 31(@)(@@) % غايات قوم مبدا سريكم % في رتب الفضل بين أقوامه % % 32(@)(@@) % يهدي له المدح في نفائسه % % والذخر من دره نجا تامه % % 33(@)(@@) % و ما عسى ذوي المديح تحمل من طيبه % % طيبة في الثنا وتمامه % % 34(@)(@@) % إلى سري فتاق السراة وما % % زيد نبات الفلا كقلامه % % 35(@)(@@) % مالروض يروي شذا النسيم لنا % % صحائحا من حديث نمامه % % 36(@)(@@) % أعبق من ذكره ولا عبق المس % % ك المسمى أقل خدامه % % 37(@)(@@) % ولا حيا السحب في تراكمها % % بالودق تسخو طلال تسجامه % % 38(@)(@@) % عن ابن عباسها الدجون روت % % والبرق يروي عن ابن بسامه % % 39(@)(@@) % أسمح منه بما حوته يده % % في يومه والسحاب في عامه % % 40(@)(@@) % ولا بحار الطوفان طائفة % % كالبحر في صدره وأكمامه % % PageV01P1787 41(@)(@@) % ولا ولا أو يعود قائلها % % من بعد إفصاحه كتمتامه % % 42(@)(@@) % خذها نباتية المدائح من % % جائد فكر القريض همامه % % 43(@)(@@) % سابق مداحكم وأجدرهم % % بأن تبدا إعدام اعدامه % % 44(@)(@@) % لازال مهدي اليتيم من درر ال % % مدح يراكم ثمال أيتامه % % 45(@)(@@) % سام وحام الثنا لكم صحفا % وجاء في سامه وفي حامه % % PageV01P1788 البحر : - 1(@)(@@) % يفدي كرام الحمى منكم كرائمه % % ويعبق الروض إن ولت كمائمه % % 2(@)(@@) % با آل تغلب لا يغلب تصبركم % % صرف الزمان ولا تزهب عظائمه % % 3(@)(@@) % ليس النفائس مما تأسفون بها % % ولا التثبت منقوض عزائمه % % 4(@)(@@) % ولا تلوم ولو فاضت جفونكم % % على المصاب الذي انقضت حوائمه % % 5(@)(@@) % فأكرم الدمع ما سحت بوادره % % من الوفاء وما انهلت سواجمه % % 6(@)(@@) % إناالى الله من رزء براحلة % بكى لها الحرم الأقصى وقادمه % % 7(@)(@@) % وبئر زمزم قد هاجت مدامعها % % وبيت وائل قد ماجت دعائمه % % 8(@)(@@) % إن لم تزاحم بأولاها لها نسيبا % فقد غدت بمساعيها تزاحمه % % 9(@)(@@) % قريبة كل عن أوصاف رتبتها % % سجع الفتى وهو 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms360# منشي القول ناظمه % % 10(@)(@@) % و أوحشت صدر محراب بفقد حلا % كأنها دمعة مما تلازمه % % PageV01P1789 11(@)(@@) % ما خص مأتم أهليها بل اتفقت % % في كل باب من التقوى مآتمه % % 12(@)(@@) % فلو بكت سور القرآن من أسف % % لانهل جفن النسا مما تكاتمه % % 13(@)(@@) % و لو أطافت بنات النعش لا بتدرت % % تنافس النعش فيها أو تساهمه % % 14(@)(@@) % و لو درى القبر من وافاه لاحتفرت % % من السرور بلا كف معالمه % % 15(@)(@@) % إن يغد روضا فقد ارسى بجانبه % % غيث الدموع وقد جادت غمائمه % % 16(@)(@@) % و هب من طي مثواه نسيم ثنا % يود نشر الغوالي لو يقاسمه % % 17(@)(@@) % وزيد في الحور ذي حجب ممنعة % % يمسي ورضوان في الجنات خادمه % % 18(@)(@@) % مضى لأخصب من أوطانه وقضى % % فما على الدمع لو كفت سوائمه % % 19(@)(@@) % هو الحمام الذي خففت قدرته % % فكيف تنكر أمرا أنت عالمه % % 20(@)(@@) % لايفتأ الليل أن ترمى كواكبه % % نبلا ولا الصبح أن تنضى صوارمه % % PageV01P1790 21(@)(@@) % بينا الفتى رافع الآمال خافضها % % اذ انتحى من صروف الدهر حازمه % % 22(@)(@@) % ان يمس ربعك قد راعت نواعيه % % فطالما صدحت أنسا حمائمه % % 23(@)(@@) % و ان يكن بيت صبري قد ألم به % % عدي دهر فقد سلاه حاتمه % % 24(@)(@@) % لا تجزعن أبا العباس من خطر % عداك فالوقت باكي الفكر باسمه % % 25(@)(@@) % و ذاهب بات طرف الخير ذا سهر % % عليه وهو قرير الطرف نائمه % % 26(@)(@@) % ما ضره في مطاوي الأرض منزلة % % وأنت دافنه والله راحمه % % PageV01P1791 البحر : - 1(@)(@@) % بكى لك العاليان القدر والهمم % % و الماضيان سنان الرأي والقلم % 2(@)(@@) % و الوقت أغيد في أعطافه ميد % % و العز أصيد في عرنينه شمم % % 3(@)(@@) % و العقل يثني عليه الركب وا أسفا % للعقل يثني عليه الأنيق الرسم % % 4(@)(@@) % و الفضل ما بين موروث ومكتسب % % فحبذا هو نعت لازم وسم % % 5(@)(@@) % يا غائبا أظلمت دار لغيبته % % وهكذا البدر تدجو بعده الظلم % % 6(@)(@@) % يا من يعز علينا أن نفارقهم % % وجداننا كل شيء بعدكم عدم % % 7(@)(@@) % رحلت عن عادمي صبر وما قدروا % % أن لا تفارقهم فالراحلون هم % 8(@)(@@) % من للرئاسة فيها الجد أجمعه % % وللسياسة فيها الصفح والنقم % % 9(@)(@@) % من للوقار أمام الحجب يحجبه % % وللفخارأمام الشهب يبتسم % % 10(@)(@@) % من للسطور على صحف معذرة % % تكاد بالقلب قبل الثغر تلتثم % % PageV01P1792 11(@)(@@) % من للحمى 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms361# كف سار كف قاصده % % سرا وجهرا فلا عرب ولا عجم % 12(@)(@@) % مضى وغير عجيب أن يقال مضى % % فانما هو عضب الملة الخذم % % 13(@)(@@) % نح يا حمام مع الباكي على غصن % % رطب وقف بجمى لم يعفه القدم % % 14(@)(@@) % أذكرتنا فقد يحيى يا محمده % % وللجراح على آثارها ألم % % 15(@)(@@) % ماذا تركت لأرض الشام من أسف % % إذا تذكرت الأنساب والشيم % % 16(@)(@@) % ماذا تركت بمصر من حقيق جوى % % ياذا الشبيبة حتى آذها الهرم % 17(@)(@@) % لهفي على واحد في العزم منفرد % % كانت تقر لمسعى سعده الأمم % % 18(@)(@@) % لهفي على قلم يهتز ثابته % % في مهرق خافق الأعلام قد علموا % % 19(@)(@@) % عطلت هذا وهذا إذ رحلت وقد % % خاب الرجاء فلا بان ولا علم % % 20(@)(@@) % لهفي على أسطر سار البريد بها % % تحت الظلام وفيها الكلم والكلم % % PageV01P1793 21(@)(@@) % و الخيل والليل والبيداء شاهدة % % والضرب والطعن والقرطاس والقلم % % 22(@)(@@) % لهفي على بيت فضل كان من زنة % % في الشمل وهو كبيت الشعر منتظم % % 23(@)(@@) % رماه بالنقص والاحزان حرف ردى % % مغير فهو منقوص ومنثلم % % 24(@)(@@) % لهفي على البدر منكم يا بني عمر % % لا تستطيع نداه الأنجم الخدم % % 25(@)(@@) % هوت معاليه حيث العمر مقتبل % والسعد جار وأكناف العلى حرم % % 26(@)(@@) % و الوجه ريان من ماءي حيا وضيا % حتى يكاد على الأعطاف ينسجم % % 27(@)(@@) % مازال للسر قبر في جوانحه % % حتى أتى القبر والأسرار تزدحم % % 28(@)(@@) % بمثله يفخر الملك العقيم على % % ماض وأن النسا عن مثله عقم % % 29(@)(@@) % عمري لقد صرخ الناعون في رجب % فأسمع النوح شجوا من به صمم % % 30(@)(@@) % و بالغ الحزن فينا ثم صبرنا % % أن الطريق إلى أحبابنا أمم % PageV01P1794 31(@)(@@) % مضى الأنام على هذا وساق بهم % % حادي الردى وسنمضي نحن أثرهم % 32(@)(@@) % و المرء في الأصل فخار ولا عجب % % ان راح وهو بكف الدهر منحطم % % 33(@)(@@) % و للمنية فخ من هلال دجى % % شهب البزاة سواء فيه والرخم % % 34(@)(@@) % قل للذي هزمت شحا كتائبه % % هل فاته من جيوش الموت منهزم % % 35(@)(@@) % سقى ضريحك رضوان ولا برحت % % تنهل نافعة في تربك الديم % % 36(@)(@@) % حتى تنور أرض أنت ساكنها % % نورا ونورا ويزهى القاع والأكم % % 37(@)(@@) % ودام للناس باقي البيت ينشده % % اذا سلمت فكل الناس قد سلموا % % PageV01P1795 البحر : - 1(@)(@@) % سقى زمان الصبا يا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms362# منزل الهرم % % دم من الدمع أو دمع من الديم % % 2(@)(@@) % يا نيل مصر ودمعي لا يحل بكما % % عهد الوفاءين من جار ومنسجم % % 3(@)(@@) % كراحتي علم الدين الأمير اذا % % لاقي الرجا بمضي البشر مبتسم % % 4(@)(@@) % ذو الرأي والعزم والهيجاء مسبعة % % والعلم والحلم والمعروف والكرم % % 5(@)(@@) % وفارس الجيش كالعنوان تقدمه % % والصف كالسطر والخطي كالعلم % % 6(@)(@@) % أكرم به وأبيه قبلة فلقد % % توارثا شيما ناهيك من شيم % % 7(@)(@@) % نصرت في حرب أيامي بهم فأنا % % في جنة تحت ظل السيف والقلم % % PageV01P1796 البحر : - 1(@)(@@) % بانت سعاد حقيقة % % مني وما رعت العصم % % 2(@)(@@) % و شقيت بالأولاد بع % % ضهم لكلي قد قصم % % 3(@)(@@) % لولا ندى قاضي القضا % % ة لوائق القصد انفصم % % 4(@)(@@) % هنئت شهرا بامتدا % % حك فيه قد سمع الأصم % % 5(@)(@@) % يا من به لاذ الفق % % ير من الفواقر واعتصم % % 6(@)(@@) % ياذا الرغائب من نوا % % لك لا أصوم ولم أصم % % 7(@)(@@) % خصمي من الأولاد جا % % ر وأنت أولى من خصم % % PageV01P1797 البحر : - 1(@)(@@) % أصبحت بعد تطاول الأيام % % قلبي بموضع قالبي بالشام % % 2(@)(@@) % ان مت من حزن فان بني قد % % ماتوا بشامهم من الاعدام % % 3(@)(@@) % يا للوزيرين اللذان هماهما % % لا ترحماني وارحما أيتامي % % 4(@)(@@) % من لي بحملهم على عيني فما % % لي نحو حملهم على أقدامي % % 5(@)(@@) % فيكون جبركما لقلبي جبرهم % % فهم على كل الوجوه عظامي % % 6(@)(@@) % يا عصمة لأرامل وثمال أي % % تام بقيتم عصمة الاسلام % % 7(@)(@@) % أقسمت لولا جاهكم ونوالكم % % أصبحت لا خلفي ولا قدامي % % PageV01P1798 البحر : - 1(@)(@@) % يا ابن الأولى اتخذوا السماء مطامحا % لغريمهم ونجومها خداما % % 2(@)(@@) % لله أنت فما أبر مكارما % للشائمين وما أجل مقاما % % 3(@)(@@) % أنت الذي أحيي المآثر بعد ما % % أمست عظام المأثرات عظاما % % 4(@)(@@) % نعم الشهاب اذا تمرد مارد % من عسرة لاقى لديك حماما % % 5(@)(@@) % لك همة تسع الفضاء ورتبة % % لا تستطيع لها النجوم مراما % % 6(@)(@@) % ومكارم ما لاح بشرك بارقا % إلا استهلت للوفود غماما % % 7(@)(@@) % وفضائل في الروض أودع نشرها % % فترى النسيم لسائل نماما % % 8(@)(@@) % ذلت لعزتها الفرائد في الحلى % % عجزا ولا عجب لذل يتامى % % 9(@)(@@) % ويراعة حمر الإهاب كأنها % % ألف تقد إذا غضبت اللاما % % 10(@)(@@) % وتواضع كالشمس دان ضوءها % % والقدرأرفع رتبة ومراما % % PageV01P1799 11(@)(@@) % هي عادة من فضل بيتكم الذي % % خلقت مناقبه الحسان تماما % % 12(@)(@@) % سبحان من 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms363# عم البلاد ببركم % % في كل معضلة وخص الشاما % % 13(@)(@@) % هنئت بالعيد السعيد ودمت ذا % % قدر توقل ما اشتهى وتسامى % % 14(@)(@@) % قالت صفاتك للأنام دعوا العلى % % ذا ما يخالف في البرية ذاما % % 15(@)(@@) % وغدا الغمام يخاطب الكرم الذي % % يجود فقلنا للغمام سلاما % % PageV01P1800 البحر : - 1(@)(@@) % أهلا وسهلا بك من قادم % % له المعالي والأيادي الجسام % % 2(@)(@@) % قد ساقك الله إلى جلق % % لما درى حاجتها للغمام % % 3(@)(@@) % يا من به تسقى غوادي الحيا % % ويدرأ البأس ويشفى السقام % % 4(@)(@@) % لا تلم الدهر على نقلة % فقد تنقلت لأشهى مقام % % 5(@)(@@) % وحيثما يممت من منزل % فانه الدنيا وأنت الأنام % % PageV01P1801 البحر : - 1(@)(@@) % تصبر فإن الأجر أسنى وأعظم % % ورأيك أهدى للتي هي أقوم % % 2(@)(@@) % وكم جاز فرط الحزن للمرء لم يفد % % فما بالنا لا نستفيد ونأثم % % 3(@)(@@) % وإني عن ندب الأحبة ساكت % وإن كان قلبي بالأسى يتكلم % % 4(@)(@@) % أعزيك في غصن ذوى قبل ماارتوى % % وقامت به ورق الثنا تترنم % % 5(@)(@@) % على مثل هذا عاهد الدهر أهله % % وصال وتفريق يسر ويؤلم % % 6(@)(@@) % وان منع الغياب أن يقدموا لنا % % فإنا على غيابنا سوف نقدم % % PageV01P1802 البحر : - 1(@)(@@) % ابن لي بيضاء حلت لواطيء % بغير نكاح تستحل به الحما % % 2(@)(@@) % على أنها ذات العبادة والتقى % % تروق للدنيا وللدين كل ما % % 3(@)(@@) % وتنمى بلا ثان لها عن فخارها % % إلى سادة يا طيب فخر ومنعما % % 4(@)(@@) % وأحرفها خمس فان أسقطوا لها % % ثلاثا غدت عشرا اذا المرء أعجما % % 5(@)(@@) % اذا عرضت أعمالها كل ليلة % % على ربها صلى عليها وسلما % % PageV01P1803 البحر : - 1(@)(@@) % نعم الامام الذي بالخصب شملها % % ممالكا وأناسيا وانعاما % % 2(@)(@@) % يا واحد العصران علما وان كرما % هنئت بالدهر ان شهرا وان عاما % % 3(@)(@@) % وبالأهلة أمثال الشفاه دنت % % للثم كف تعم الخلق إنعاما % % 4(@)(@@) % تهدي السعود إلى بحر العلوم فما % % يلام زورقها في البحر إن عاما % % 5(@)(@@) % لا زلت بالحال أهنا ما أكون به % % وقبلها كنت للأحوال أنعى ما % % PageV01P1804 البحر : - 1(@)(@@) % يا فاضلا قد عنى لرتبته % % جالب در الثنا وناظمه % % 2(@)(@@) % مااسم نحيف بال كأن على % % أحشائه صبوة تلازمه % % 3(@)(@@) % يبكي على الوصل وهو واجده % % وليس يبكيه وهو عادمه % % 4(@)(@@) % قل فيه ما شئت ان حذفت وان % % حرفت يا من لسنا نقاومه % % PageV01P1805 البحر : - 1(@)(@@) % يا وليا رجوته 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms364# لولاه % % عند دار الدنا ودار السلام % % 2(@)(@@) % حبذا كوثر الجنان ورضوا % % ن أناديه يا مضيف الكرام % % 3(@)(@@) % إسقني شربة ألذ عليها % % واسق بالله مثلها ابن هشام % % PageV01P1806 البحر : - 1(@)(@@) % أمولانا الوزير تهن عيدا % سعيدا وابق ذا عز وعزم % % 2(@)(@@) % ولا زلت هباتك بالضحايا % % وبالأشغال قائمة برسمي % % 3(@)(@@) % تبلغني قمامة كل يوم % % وتجعل فيه بيتي بيت لحم % % PageV01P1807 البحر : - 1(@)(@@) % يا سيدا صرف عني العنا % % بفعله المعرب أو باسمه % % 2(@)(@@) % شكرا لجود لازم للثنا % % كدوم روح المرء مع جسمه % % 3(@)(@@) % لولاه أصبحت فتى شاعرا % يبكي من الجود على رسمه % % PageV01P1808 البحر : - 1(@)(@@) % أبا البقاء أطال الله في نعم % % لك البقاء وفضلا ليس نعدمه % % 2(@)(@@) % يا من له نسب عالي السنا وحمى % رحب ومدح كوشي الروض نرقمه % % 3(@)(@@) % ما أحسن البيت من علياك متسقا % أثني عليه وآويه وأنظمه % % PageV01P1809 البحر : - 1(@)(@@) % سادتي كم أتشكى % % لحلي يتغمم % % 2(@)(@@) % صرت من وهمي تيسا % للمراعي يتشمم % % 3(@)(@@) % ماله في الشام مرعى % % فدعوه يتقمم % % PageV01P1810 البحر : - 1(@)(@@) % كم تمسكت بممدوحين في % % حلب رفدهما لي ما عدم % % 2(@)(@@) % فبمشكور ين محمود مضى % % وبمحمودين مشكور قدم % % PageV01P1811 البحر : - 1(@)(@@) % فضلت السعيد واستاذه % % بنظميهما وبنثريهما % % 2(@)(@@) % وكانا عتيقي فخار حويت % % فكنت الأحق بارثيهما % % PageV01P1812 البحر : - 1(@)(@@) % سقي ابن هشام في الثرى نوء رحمة % تجر على مثواه ذيل غمام % % 2(@)(@@) % سأروي له من سيرة المدح سيرة % فما زلت أروي سيرة ابن هاشم % % PageV01P1813 البحر : - 1(@)(@@) % أياسيدي انني قد عييت % % عن أن أشابه أهل الكرم % % 2(@)(@@) % فأرسلته مثل نهد الشباب % % وودي لو كان مثل الهرم % % PageV01P1814 البحر : - 1(@)(@@) % تشبهت بالغدران والروض حولها % % فأصبحت ملهى الناظر المتوسم % % 2(@)(@@) % وأنبت بالتطعيم أشجار فضة % % ومن أحسن الأشجار كل مطعم % % PageV01P1815 البحر : - 1(@)(@@) % مولاي مااسم لنا حل دنف % % وما به لا أذى ولا سقم % % 2(@)(@@) % لسان قوم فان حذفت وان % % صحفت بعض الحروف فهو فم % % PageV01P1816 البحر : - 1(@)(@@) % نشرت لك الأعراب فيما طويته % % من الود يا أوفى الانام ذماما % % 2(@)(@@) % وأمسكت من ودي لعلياك عروة % وأهديت للطرف الكريم حزاما % % PageV01P1817 البحر : - 1(@)(@@) % جفاني الفلان لأن ظني % % بتلك الهدية أبغي مراما % % 2(@)(@@) % فمن أجلها كف رجع الكلام % % وكانت حزاما فأضحت لجاما % % PageV01P1818 البحر : - 1(@)(@@) % أمولاي شمس العلى قد ظهر % % ت لآل الفلان بمجد صميم % % 2(@)(@@) % وصفرت تصفير تحبيبهم % % فكنت شميسهم من 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms365# قديم % % PageV01P1819 البحر : - 1(@)(@@) % أتاني بأمثال النجوم زواهرا % % ندى من علي ما نكرت سجومه % % 2(@)(@@) % فلله ما أندى بجود سماءه % % وأسعد في كل الأمور نجومه % % PageV01P1820 البحر : - 1(@)(@@) % شكرا لاحسانك البهي فما % % أبدعه في صنائع الكرم % % 2(@)(@@) % معناه معنى الشباب مقتبلا % وشكله المستطيل كالهرم % % PageV01P1821 البحر : - 1(@)(@@) % عجبت من الدنيا التي جل خطبها % % وحارت قلوب عندها وفهوم % % 2(@)(@@) % فيالتها اذ لا تدوم تطيب أو % % فيالتها اذ لاتطيب تدوم % % PageV01P1822 البحر : - 1(@)(@@) % أشبعت أكباد أولادي وأعينهم % % من الشوا ولقد كانوا ذوي قرم % % 2(@)(@@) % حتى لقد حسدوا جيران بابكم % وقيل بشراكم يا جيرة العلم % % PageV01P1823 البحر : - 1(@)(@@) % يا حاكمي الجامع مهلا فما % % نيأس من ألطاف رب رحيم % % 2(@)(@@) % بحوله نرفع أقداركم % % ذلك تقدير العزيز العليم % % PageV01P1824 البحر : - 1(@)(@@) % عج عن العجب فهذي جلق % % أصبحت منه على حال ذميم % % 2(@)(@@) % لم تزل بالعجب حتى ضربت % % نفسها منه بطاعون عظيم % % PageV01P1825 البحر : - 1(@)(@@) % تهن بشهرك الميمون واعلم % % بأن نصيب حالي فيه هم % % 2(@)(@@) % اذا قال الحلاوة قال عذرا % اليك فانني شهر أصم % PageV01P1826 البحر : - 1(@)(@@) % أحبتنا لا عين سلوان عنكم % % بأرض ولكن كل واد جهنم % % 2(@)(@@) % ومافي شهور العام بعدكم هنا % % فذا صفر يدعى وهذا محرم % % 3(@)(@@) % فعودوا كما عاد الوزير لظاميء % دعا بره المعهود فانهل يسجم % % 4(@)(@@) % سلوني عن جود الوزيرين إن لي % % ثنا يبديء الذكر الجميل ويختم % 5(@)(@@) % فهذا وزير عظمته ممالك % وهذا شهير الفخر قد قيل أعظم % % 6(@)(@@) % رعيت ربيعي مصر والشام في حمى % % وزيرين كل في السيادة مسلم % % 7(@)(@@) % واذكرني القدر الشريف قمامة % فقلت ودعني بعد ذا أتقمم % % PageV01P1827 البحر : - 1(@)(@@) % تهن بالأعياد يا عيدها % % في أفق فضل ومقام كريم % % 2(@)(@@) % فطرا لمن والاك نحرا لمن % % عاداك ذا عدن وهذا جحيم % % 3(@)(@@) % أهدي لك المدح وأرجو به % % من قرب أولادي درا يتيم % % 4(@)(@@) % أيتمهم بعدي واني على % % بابك لاه في جنان النعيم % % 5(@)(@@) % يقول شعري كلما حفه % % نداك في أوقات حالي الرميم % % 6(@)(@@) % يا نجل محي الدين سبحان من % % أحيا بنعماك نباتي الهشيم % % 7(@)(@@) % لا سمع لللآثم في حبكم % % أعوذ بالله السميع العليم % % PageV01P1828 البحر : - 1(@)(@@) % قالوا وقد ملكت رقي غلام % % عاشق هذا ما عليه ملام % % 2(@)(@@) % يا غصن يا أهيف يا طفل يا % % قاتل هذا الشيخ يا والسلام % % 3(@)(@@) % يا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms366# جنة الخال على خده % % ما أنت الا شامة في الشآم % % 4(@)(@@) % وأنت مادح سعد التقى % % ما أنتما الا فريدا الأنام % % 5(@)(@@) % لشعر هذا فضل أيام ذا % % يقول يا بشراي هذا غلام % % 6(@)(@@) % لولاك سعد الدين لم يمح من % % ظلم ذوي الأقلام عنا ظلام % % 7(@)(@@) % لا زال مثل السرج في نصره % % وسعده في فم باغ لجام % % PageV01P1829 البحر : - 1(@)(@@) % من لي بها حسناء معرب حسنها % % زاه على الأعراب والأعجام % % 2(@)(@@) % من يافث في حسنها أو فرعها % % تلقاك في سام يصول وحام % % 3(@)(@@) % كسطور شمس الدين طي طروسه % % تسطو على الأعداء بالإعدام % % 4(@)(@@) % تجني على الألحاد أو تجني الهدى % % ثمرا على قضب من الأقلام % % 5(@)(@@) % ذو الملك في علم يسر وأسرة % % منقوشة بفوائد النظام % % 6(@)(@@) % قال الرجا سلم على أبوابه % % تسلم وعيشك من أذى الأيام % % 7(@)(@@) % فقضيت فرضا كالصلاة مسلما % ودخلت جنات الهنا بسلام % % PageV01P1830 البحر : - 1(@)(@@) % كفى سرد المشيب علي لامه % % فردي نبل لحظك يا أمامه % % 2(@)(@@) % وكفي يا كريمة كيد حسن % % فلا كيد العذول ولا كرامه % % 3(@)(@@) % محى ظلم الهوى رشدي كما قد % % محى قاضي الورى ظلم الظلامه % % 4(@)(@@) % رفيع التاج أزهر خزرجي % % زكي الحلم مبرور الشهامه % % 5(@)(@@) % لئن سجعت بمدح لهاه خلق % لقد لبسوا بها سجع الحمامه % % 6(@)(@@) % مضى ابن دقيق عيد والعلايا % % ولكن جاءنا نجل الإمامه % % 7(@)(@@) % كحشو الخشكنان له صفات % % فما وصفي دقيقا أو علامه % % PageV01P1831 البحر : - 1(@)(@@) % حيتك غادية الحيا يا دار من % % أهوى وحوام عليك المرزم % % 2(@)(@@) % ما أنس اذ لحظ الاحبة ساحر % والحب في طلب الوصال معزم % % 3(@)(@@) % عيش يضييء كما أضاء بتاجه % % وجه القضايا فالمظالم تهزم % % 4(@)(@@) % أنحى بني العلياء في حالاتهم % % فالقدر يرفع والأوامر تجزم % % 5(@)(@@) % يا حاكما كم في العفاة لماله % % كيس يحل وكيس عدل يحزم % % 6(@)(@@) % للجامع المعمور خمسة أشهر % % مالي وصول في الجرائد يخزم % % 7(@)(@@) % فنظمتها وأخاف قولك مازحا % هذي القصيد لزوم مالا يلزم % % PageV01P1832 البحر : - 1(@)(@@) % بجفونها وبفرعها يا مغرم % % وافى بنصرتها السواد الأعظم % % 2(@)(@@) % حتى م تشكو كسرة من جفنها % % والى متى من فرعها تتظلم % % 3(@)(@@) % واجل المديح فذاك أفلح مجتلى % % مدح وان شئت العلوم فأعلم % % 4(@)(@@) % يا حاكم الحكام عرسي أزمعت % % في النصف أن تشكو وأن تتحكم % % 5(@)(@@) % قالت أما 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms367# في نصف شعبان لنا % % شيء يذاق على مذاقته الفم % % 6(@)(@@) % فأجبتها روحي فلا نصف لكم % % إن لم يداركنا ولا لي درهم % % PageV01P1833 البحر : - 1(@)(@@) % لمولودكم يا آل يعقوب أنجم % % من اليمن لم تحتج لحدس منجم % % 2(@)(@@) % يسابقه قبل العقيقة مادح % بجوهرة من كل عقد منظم % % 3(@)(@@) % فهنئتم بدرا أنار وانما % % بخفي حنين عاد شانيكم العمي % % 4(@)(@@) % لعمري لقد ضاءت نجابة طفلكم % % فأكرم بكم أكرم بكم ثم أكرم % % 5(@)(@@) % تبارك من في آل يعقوب باركت % % ارادته ما بين آت وأقدم % % 6(@)(@@) % ففي أول إرث النبوة يوسف % % على آخر إرث الوزارة ينتمي % % 7(@)(@@) % تيممت أجوادا وفاضت بحوركم % % فلم يبق عندي رخصة في التيمم % % PageV01P1834 البحر : - 1(@)(@@) % لقد عرفت تجنيها كما عرفت % % يد الجواد ابن قطب الدين بالكرم % % 2(@)(@@) % يا من تقلدت من احسانه مننا % أحيت رجائي كما يرجو ذوو نعم % % 3(@)(@@) % إن كان برك أضحى ملء كل يد % فأن شكرك أضحى ملء كل فم % % 4(@)(@@) % جادت أياديك حتى اشتط سائلنا % % فلم أياديك والسؤال لا تلم % % 5(@)(@@) % كذا تكون الكفاة السائدون فلا % % منع ولا جانب للحق مهتضم % % 6(@)(@@) % جند العساكر في جند يجهزه % % ونعم جند الدعا في حندس الظلم % % PageV01P1835 البحر : - 1(@)(@@) % سقت بجواري الدمع عني جواريا % على تركها مني السلام ورومها % % 2(@)(@@) % أو انس ان ينعم حشانا بقربها % % لقد شقيت من بعدها بكلومها % % 3(@)(@@) % وقد لقيت في الحب ما لقيت عدى % % لآلاء سيف الملك عاشت لشومها % % 4(@)(@@) % تشاريف سيف الملك شاقت لناظر % % فلله مرئي روضها وغيومها % % 5(@)(@@) % رأى الناصر السلطان علياك تجتلى % % فتحسن في زركاشها ورقومها % % 6(@)(@@) % فواصل نعماها بملك وواصلت % % يداك على العافين فيض سجومها % % 7(@)(@@) % فكم من عراة جوع يا أخا العطا % % تحانت على أكبادها وجسومها % % PageV01P1836 البحر : - 1(@)(@@) % يا فاتكا خده لي شامتا بدمي % % في ألف حل من الشكوى وفي حرم % % 2(@)(@@) % خصصت فيك بسهدي والدموع كما % % خص ابن جاديك بالتقوى وبالكرم % % 3(@)(@@) % وبالجميلين من خلق ومن خلق % وبالسيادة في عرب وفي عجم % % 4(@)(@@) % ويا أخا الفضل في الدارين يجمعها % % حمدا وأجرا ففزفي ذا وذا ودم % % 5(@)(@@) % يا ظاهر القول والافعال علمه % % بالخير من علم الإنسان بالقلم % % 6(@)(@@) % جاورت مدحك بالمدح احتوى علما % فحبذا أنتم يا جيرة العلم % % PageV01P1837 البحر : - 1(@)(@@) % بأبي 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms368# حالية إذ وصلت % % ذكرها أعطف من مر النسيم % % 2(@)(@@) % إسمها مع فعلها مع وصفها % % لي ريحان وروح ونعيم % % 3(@)(@@) % مثل أقلام علاء الدين إذ % % قلدت من نفسها عقدا نظيم % % 4(@)(@@) % صاحب الأسرار في تدبيره % % للعلى سر من الله عظيم % % 5(@)(@@) % كرم يرجى وبأس يختشى % % وثنا يسري وإحسان يقيم % % 6(@)(@@) % سيدي أذكر أطفالي إذا % % قيل في الأغزال ذا در يتيم % % 7(@)(@@) % أنا في نعماك لكن مهجتي % % مثلهم في حال بعد في جحيم % % PageV01P1838 البحر : - 1(@)(@@) % قلب بمصر وقالب بالشام % % من مبلغ قلبي ومصر سلامي % % 2(@)(@@) % أخفي بكمي الدموع تلونت % % فكأنها الأزهار في الأكمام % % 3(@)(@@) % شوقا أجدت عليه نثر مدامعي % % وعلى علا قاضي القضاة نظامي % % 4(@)(@@) % قاضي القضاة عليه يعقد خنصر % % ويضيء وجه العلم من إبهام % % 5(@)(@@) % يا وارث الأنصار عودة وفده % % نصرا على الأعداء والاعدام % % 6(@)(@@) % العيد قد حمل الهنا أعلامه % % فتهن يا علامة الأعلام % % 7(@)(@@) % وانحر بصحبته الضحايا والعدى % % فالكل معدود من الأنعام % % PageV01P1839 البحر : - 1(@)(@@) % بلغت في الحب سن الطاعن الهرم % % وما بلغت بسهدي مبلغ الحلم % % 2(@)(@@) % لا وصل سعدى ولا الطيف الملم فيا % % للقلب من ألم باق على ألم % % 3(@)(@@) % أصبحت في الحب فرد الانتساب وفي % % مدح الوزير فقل في المفرد العلم % % 4(@)(@@) % أزكى الأكارم في خبر وفي خبر % وأرأس القوم من عرب ومن عجم % % 5(@)(@@) % يا مذكري بكرام قد فقدتهم % فكان أكرم وجدان على عدم % % 6(@)(@@) % يا من يسائل عن مالي ويطلبني % % وكلها حيلة منه على الكرم % % 7(@)(@@) % جد لي بشيء يحاكيني فاني قد % % أصبحت لولاكم لحما على وضم % % PageV01P1840 البحر : - 1(@)(@@) % لمصر مفاخر تقديم تاج % % على مي الاشارة في الكرام % % 2(@)(@@) % حكاك اسما ومعنى وانتسابا % وعلامي أوفى من علامي % % 3(@)(@@) % و ما سماك هذا الإسم إلا % % ولي عارف سر الأسامي % % 4(@)(@@) % أبوك سقى الغمام أباك حتى % % دعيت اذا عليا في الغمام % % 5(@)(@@) % لقد ظهرت كرامة مارآه % % إمام عن إمام عن إمام % % 6(@)(@@) % و هذا أنت للمصرين تاج % فريد في فريد من نظام % % 7(@)(@@) % جعلت السبعة الأبيات ستا % تنادي كل يوم يا غلامي % % PageV01P1841 البحر : - 1(@)(@@) % مشاهد القدس حيى % % حماك صوب الغمامه % % 2(@)(@@) % حتى أراني من مص % % ر قد فتحت قمامه % % 3(@)(@@) % قامت قيامة قوم % % رأوا لقدري علامه % % 4(@)(@@) % و ظيفة قيل 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms369# ماذي % % فقلت قول السلامه % % 5(@)(@@) % قيامة عند قوم % % وعند قوم قيامه % % PageV01P1842 البحر : - 1(@)(@@) % أفدي حبيبا ليس لي % % في حسنه الفتان لائم % % 2(@)(@@) % متنبها وكأنه % % لفتور ذاك اللخط نائم % % 3(@)(@@) % أشكو ذوائب شعره % % شكوى السليم إلى الأراقم % % 4(@)(@@) % سبحان مالىء خده % % تبرا وصائغ فيه خاتم % % PageV01P1843 البحر : - 1(@)(@@) % نهنيك بل انا نهني مناصبا % لشمسك يمحو عدلها كل مظلم % % 2(@)(@@) % شكى حزنها قوم وفضلك منشد % اذا طلعت شمس النهار فسلم % % 3(@)(@@) % و ما هي الا طلعة قرشية % % سيشتد من أخبارها كل مسلم % % 4(@)(@@) % و أقسم لولا أنت تردع معشرا % تهون عليهم حالة المتألم % % 5(@)(@@) % لما نال كفي منهم نصف درهم % % بلى نال قلبي منهم نصف درهم % % PageV01P1844 البحر : - 1(@)(@@) % ياطرس قبل راحة شمسية % تزهو بها وبمدحها الأيام % % 2(@)(@@) % ذلت الصحابة والصحابة لم تزل % % بحرا لها متدفق وغمام % % 3(@)(@@) % و اعلم بأنك قد وصلت لمورد % % ما بعده للواردين أوام % % 4(@)(@@) % قد كللته شفاه لثم دائر % حتى كأن اللثم فيه لثام % % 5(@)(@@) % و اذكر ضرورة قائل في شعره % % قولا مضى عام عليه وعام % % 6(@)(@@) % عرج على حرم الجراية منشدا % يا دار ما صنعت بك الأيام % % 7(@)(@@) % ان لم تعجل غوث عائلتي بها % % فكأنها وكانهم أحلام % % PageV01P1845 البحر : - 1(@)(@@) % هنئتها خلعا مجددة على % % علياك بالإجلال والإعظام % % 2(@)(@@) % بيض تخبر أن عيشا أبيضا % منها وأخضر كالربيع النامي % % 3(@)(@@) % يتمسك الروض النضير بذيلها % % متأرجا والزهر بالأكمام % % 4(@)(@@) % و تقي طرحتها عليك فحبذا % % غيث خلال الروض تحت غمام % % PageV01P1846 البحر : - 1(@)(@@) % لنا ملك إن يممته ركابنا % % وإن نتيمم عاجلتنا المكارم % % 2(@)(@@) % أفاض العطايا في مقيم وراحل % كما هطلت في الجانبين الغمائم % % 3(@)(@@) % فسار إلى النعماء يدرك ما اشتهى % % وآخر يأتي رزقه وهو نائم % % PageV01P1847 البحر : - 1(@)(@@) % يا أيها الملك الذي كل الرجا % % والروع بين يراعه وحسامه % % 2(@)(@@) % هنئت شهرا مثل طرف ساكت % % يسعى به المخدوم نحو مرامه % % 3(@)(@@) % جمع الثريا والهلال وإنما % % وافى اليك بسرجه ولجامه % % PageV01P1848 البحر : - 1(@)(@@) % هنئت بالعيد السعيد ودمت ذا % % نعم لها في القاصدين غمائم % % 2(@)(@@) % لله ما أشهى بك الدنيا وما % % أزكى زمانا أنت فيه سالم % % 3(@)(@@) % ألشام منزلنا وأنت ملاذنا % % دار مباركة وعز دائم % % PageV01P1849 البحر : - 1(@)(@@) % شكرا لقاضي القضاة ما طلعت % % شمس ومدت سجوفها ظلم % % 2(@)(@@) % يبلغها شاكر الجميل كما 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms370# % % تبلغنا في جنابه النعم % % 3(@)(@@) % لفظ وفضل كلاهما ذهب % فكل أوقاته لنا كرم % % PageV01P1850 البحر : - 1(@)(@@) % لجأت إلى الباب الجمالي قاصدا % فقابل آمالي من السعد خادم % % 2(@)(@@) % و في العلمين الجائزين بخاطري % % أوامر للقصد الجميل تلازم % % 3(@)(@@) % فهذا بديوان الرسائل منتش % % وهذا بديوان المدائح ناظم % % PageV01P1851 البحر : - 1(@)(@@) % كم قائل إذ رآني % % مفكرا في ملمه % % 2(@)(@@) % تسير في أي واد % % فقلت والغيث يمه % % 3(@)(@@) % من المزيريب أسري % % أريد وادي فحمه % % PageV01P1852 البحر : - 1(@)(@@) % يا سيدي نفحات جو % % دك لا يطاق لها اكتتام % % 2(@)(@@) % لكن دراهم في يد % % ي بدت فقال لي الأنام % % 3(@)(@@) % ما هذه فأجبتهم % % صدقات سر والسلام % % PageV01P1853 البحر : - 1(@)(@@) % رأت بناتي حب جسمي الذي % % من طرزه عندي أذى مؤلم % % 2(@)(@@) % فقلت ما تطريز هذا الأذى % % فقلن هذا الحلط والبلغم % % 3(@)(@@) % يا رب رحماك فمنك الشفا % % من كل مايخفى وما يعلم % % PageV01P1854 البحر : - 1(@)(@@) % إلى مدح ابن فضل الله أفضت % % بي الأفكار واتسق النظام % % 2(@)(@@) % هي السحر الحلال له وأما % % على حساده فهي الحرام % % PageV01P1855 البحر : - 1(@)(@@) % لله ترخيم بجامع جلق % متجانس الترصيع والتعظيم % % 2(@)(@@) % نظمت يا كهف العفاة عقوده % % فغدا المكان به كمثل رقيم % % 3(@)(@@) % وازداد تحسينا يخالف قول من % % قد قال ان النقص في الترخيم % % PageV01P1856 البحر : - 1(@)(@@) % هنئت بالعيد السعيد وهنئت % % ببقائك الأعياد والأعوام % % 2(@)(@@) % عيد يعود حماك ألف مثله % % والبيض طوع يديك والأقلام % % 3(@)(@@) % فانعم به واسق الضحايا والعدى % % نحرا فان جميعهم أنعام % % PageV01P1857 البحر : - 1(@)(@@) % سيدي دعوة شاك % % من عيال جور حكم % % 2(@)(@@) % يطلبون اللحم في العي % % د وما يدرون همتي % % 3(@)(@@) % و أخاف العيد يأتي % % وأنا قطعة لحم % % PageV01P1858 البحر : - 1(@)(@@) % يا سيد الوزراء دعوة لائذ % % حاشاه في أيام جودك يحرم % % 2(@)(@@) % طلب الورى متأخر عن قبضهم % % فغدوت أنشد والمدامع تسجم % % 3(@)(@@) % وقف الأسى بي حيث أنت فليس لي % % متأخر عنه ولا متقدم % % PageV01P1859 البحر : - 1(@)(@@) % جمال دين الاله أنقذني % % من عثرتي وانتقى ثنا كلمي % % 2(@)(@@) % يسأل عزي ويقتضي طلبي % % وكل ذا حيلة على الكرم % % 3(@)(@@) % علمه الفضل في مناصبه % % من علم الكاتبين بالقلم % % PageV01P1860 البحر : - 1(@)(@@) % شكرا لنجم العلاء كم منن % % قلدني عقدها وكم نعم % % 2(@)(@@) % قلت وقد نوعت يداه على % % حالي أنواعها من الكرم % % 3(@)(@@) % أفدي إماما حلت صنائعه % % بيتي وجيدي وشدتي وفمي % % PageV01P1861 البحر 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms371# : - 1(@)(@@) % قالت أفي شعباننا مالنا % % نصف يحلينا كما تعلم % % 2(@)(@@) % قلت لها موسى وزير التقى % % يعلم أني رجل معدم % % 3(@)(@@) % إن لم يغثنا فاعلمي أنه % % والله لا نصف ولا درهم % % PageV01P1862 البحر : - 1(@)(@@) % يا سيدا لا زال ممتحنا % بحادثات الزمان من قدمه % % 2(@)(@@) % من سلم قد وقعت وقعة من % % زاد مقال الحاكمين في ألمه % % 3(@)(@@) % رأس ورجل والضلع فهو كما % % يقال من قرنه إلى قدمه % % PageV01P1863 البحر : - 1(@)(@@) % لا تقيسوا ابن سنانا في الندى % % ما ابن أيوب قياس منخرم % % 2(@)(@@) % فرق ما بينهما متضح % % أين من جود فتى جود هرم % % PageV01P1864 البحر : - 1(@)(@@) % أيا صاحب النعم الباهرات % % إليك بعثت مقالي النظيم % % 2(@)(@@) % وأهديت منه يتيم العقود % % وحاشاك تكسر قلب اليتيم % % PageV01P1865 البحر : - 1(@)(@@) % لي صديق يسوءني % % ما يقاسي من الألم % % 2(@)(@@) % كيف يخفي شجونه % % وهو نار على علم % PageV01P1866 البحر : - 1(@)(@@) % و أصهار سوء ذو الدراسة بينهم % % وذو الفقر مذموم فإياك عنهم % 2(@)(@@) % فان كنت تشكو الفقر فهي مصيبة % وان كنت تدري فالمصيبة أعظم % PageV01P1867 البحر : - 1(@)(@@) % يارب ضيفان قوم جلد هامته % % جلد على الطارق الطاري من الأدم % % 2(@)(@@) % اذا رأى الدلو فوق الرأس أنشده % % ضيف ألم برأسي غير محتشم % % PageV01P1868 البحر : - 1(@)(@@) % لقد رحمنا بقوم % % زهر الوجوه أئمه % % 2(@)(@@) % جماعة نسبة يا % % لها جماعة رحمه % % PageV01P1869 البحر : - 1(@)(@@) % شكى بفحمة شيخ % % ضعفا يحرك وهمه % % 2(@)(@@) % فقلت لا موت فيها % % ماذي حوائج فحمه % % PageV01P1870 البحر : - 1(@)(@@) % الله سخر لي وعائلتي % % من حف بي الإكرام والكرما % % 2(@)(@@) % حتى تلوت قبل رؤيتهم % % يا ليت قومي يعلمون بما % % PageV01P1871 البحر : - 1(@)(@@) % لم أدر في المداح أن قد أتى % % علاء دين الله نجل كريم % % 2(@)(@@) % حتى رأيت الوفد طافوا به % % وبشروه بغلام عليم % % PageV01P1872 البحر : - 1(@)(@@) % و غانية يوافقني اذا ما % % صبوت لها ذووا العقل السليم % % 2(@)(@@) % و اعذر ان بكيت على رياض % بكاء البحتري على نسيم % % PageV01P1873 البحر : - 1(@)(@@) % للصاحب العلمي الذكر نورثا % أشهى وأشهر من نار على علم % % 2(@)(@@) % قالت تواقيعه أوقات جلسته % % سبحان من علم الانسان بالقلم % % PageV01P1874 البحر : - 1(@)(@@) % قالت جراية خبز لي سأنقلها % % في مصر من حرم واف إلى حرم % % 2(@)(@@) % هل يعلم اللحم أني بعد نقلته % % ما سرت من علم الا إلى علم % % PageV01P1875 البحر : - 1(@)(@@) % إن مت من جوع بمصر فحسرة % % إن 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms372# مات أولادي بجوع الشام % % 2(@)(@@) % قل للوزيرين الرفيع سناهما % % لا ترحماني وارحما أيتامي % % PageV01P1876 البحر : - 1(@)(@@) % أعمال برك في حلي امتداحك يا % % علي سيارة بين الأقاليم % % 2(@)(@@) % في خنصر العد أو جيد الرجاء بها % % خير القلائد أو خير الخواتيم % % PageV01P1877 البحر : - 1(@)(@@) % اذا الله كافى منعما عن مقصر % فكافى شهاب الدين أحسن منعم % % 2(@)(@@) % فكم طوق سنجاب سجعت بمدحه % % فيا حسن طوق الساجع المترنم % % PageV01P1878 البحر : - 1(@)(@@) % ان أخرتني عن مديحك فترة % % فعلى رجائي فيك أن أتقدما % % 2(@)(@@) % أوقات سبقي أن أكون مصليا % فعلي أن أقضي صلاتي كلما % % PageV01P1879 البحر : - 1(@)(@@) % وأغيد ينهب أرواحنا % % ووجهه كالروض بسام % % 2(@)(@@) % تنم خداه بقتل الورى % % فخده ورد ونمام % % PageV01P1880 البحر : - 1(@)(@@) % عجبت لحاسد أضناه أمري % % وحملني لهذا الأمر همه % % 2(@)(@@) % كلانا فائض الأجفان مهما % % بكى حنقا بكيت عليه رحمه % % PageV01P1881 البحر : - 1(@)(@@) % قلم العذار بوجنتيك جرى % % وبسيف لحظك صان كل دم % % 2(@)(@@) % فاحكم على كل الأنام فقد % % أضبحت رب السيف والقلم % % PageV01P1882 البحر : - 1(@)(@@) % يا لحظة الفتاك رفقا بامرىء % يقضي عليه تيقظ ومنام % % 2(@)(@@) % فاذا تنبه رعته واذا غفا % % سلت عليه سيوفك الأحكام % % PageV01P1883 البحر : - 1(@)(@@) % تمتعت يا إيري بغانية لها % % أمام وخلف طيب ملتقاهما % % 2(@)(@@) % حللت بهذا حلة ثم حلة % % بهذا فطاب الواديان كلاهما % % PageV01P1884 البحر : - 1(@)(@@) % قالت البيض حين شبت تغزل % % وترحل عن ودنا بسلام % % 2(@)(@@) % ما رأينا المشيب الا كبلح % % أبيض بارد قليل المقام % % PageV01P1885 البحر : - 1(@)(@@) % كسوتني خضراء ما نالها % % من منعم غيري ولا سامها % % 2(@)(@@) % يقبل الروض لديها الثرى % % ويلثم الأزهار أكمامها % % PageV01P1886 البحر : - 1(@)(@@) % يا من بامداحه اشترينا % % أموال كفيه في الأنام % % 2(@)(@@) % هانت عليك اللهى فأضحت % % تباع في الناس بالكلام % % PageV01P1887 البحر : - 1(@)(@@) % قفا زيد لقد جربت مني % % أنامل كالسياط ذوات حوم % % 2(@)(@@) % كأنك سيف زيد الخيل عندي % % أحادثه يصقل كل يوم % % PageV01P1888 البحر : - 1(@)(@@) % عمري لقد زهت الأمصار حين محى % % علي عنها ديلاجي الظلم والظلم % % 2(@)(@@) % اذا برى قلما قالت ممالكها % % يا باريء النسم احرس باري القلم % % PageV01P1889 البحر : - 1(@)(@@) % يا كريما قد طابق الإسم بالفع % % ل وأنسى في الفضل كل قديم % % 2(@)(@@) % لا تخف نبوة الحوادث فالل % % ه كريم يحب كل كريم % % PageV01P1890 البحر : - 1(@)(@@) % اذا نظرت كتابا % فاضت دموعي الهوامي % % 2(@)(@@) % نعم فما الكتب عندي % % إلا قبور الكرام % % PageV01P1891 البحر 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms373# : - 1(@)(@@) % أمولاي لا زالت مساعيك للعلى % % وكفك للجدوى ورأيك للحزم % % 2(@)(@@) % مضى السلف الأزكى وأبقاك للندى % % فلله ما أبقى الولي من الوسم ي % % PageV01P1892 البحر : - 1(@)(@@) % يا سائلي عن رتبة الحلي في % % نظم القريض وراضيا بي أحكم % % 2(@)(@@) % للشعر حلبان وذلك راجح % % ولي الزمان به وهذا قيم % % PageV01P1893 البحر : - 1(@)(@@) % زادنا في صيامنا الشاهد المي % % ت حتى تغيظ الإسلام % % 2(@)(@@) % جرحوه فما تألم جرحا % ما لجرح بميت إيلام % % PageV01P1894 البحر : - 1(@)(@@) % لجود قاضي القضاة أشكو % % عجزي عن الحلو في صيامي % % 2(@)(@@) % فالقطر أرجو ولا عجيب % ألقطر يرجى من الغمام % % PageV01P1895 البحر : - 1(@)(@@) % أهان وزير الشام قصدي عندما % % طلبت من الميراث بعض الدراهم % % 2(@)(@@) % و قال اصرفوها لابن آدم كلها % % فأيقنت أني عنده غير آدمي % % PageV01P1896 البحر : - 1(@)(@@) % دعاني صديق لحمامه % % فأوقعني في العذاب الأليم % % 2(@)(@@) % كلام يزيد وماء يقل % % فبئس الصديق وبئس الحميم % % PageV01P1897 البحر : - 1(@)(@@) % لي قلم بين دجى خطه % % يبيت ذا رقص وذا زحمه % % 2(@)(@@) % يقول من يبصر أحواله % % هذا هو الراقص في الظلمه % % PageV01P1898 البحر : - 1(@)(@@) % لا تنكر المعشوق في خده % % دم الشهيد الصابر المغرم % % 2(@)(@@) % فالريح ريح المسك من خده % % كما ترى واللون لون الدم % % PageV01P1899 البحر : - 1(@)(@@) % أفدي الذي عدمت له عين فلم % % تسحر وعين سحرها لا يعدم % % 2(@)(@@) % أصف العيون من الظباء لأجله % % ولفرد عين ألف عين تكرم % % PageV01P1900 البحر : - 1(@)(@@) % فديناك يا ابن الواسطي ممجدا % بأقلامه أو جائدا بمكارمه % % 2(@)(@@) % فخاتم أهل الجود في بطن كفه % % وياقوت أهل الخط في فص خاتمه % % PageV01P1901 البحر : - 1(@)(@@) % إن صار سفري كالسعيد الذي % % يسمى فمدحي كعبيد الرحيم % % 2(@)(@@) % ياسين من حول رجائي فقل % % سبحان من يحيي العظام الرميم % % PageV01P1902 البحر : - 1(@)(@@) % أهواه معسول الرضاب منعما % % ولقد يعذبني الهوى بمنعم % % 2(@)(@@) % يا قلب هذا شعره وجفونه % % صبرا على هذا السواد الأعظم % % PageV01P1903 البحر : - 1(@)(@@) % عيد تعودك بالهناء سعوده % % فتهنه في غبطة ودوام % % 2(@)(@@) % وانحر بصبحته الضحايا والعدى % % فالكل معدود من الأنعام % % PageV01P1904 البحر : - 1(@)(@@) % مولاي هنئت فردا في الشهور كما % % في الناس فردا دعاك العلم والكرم % % 2(@)(@@) % إصغى إلى مدح لي فيك سائرة % % وقد أسمعت كلماتي من به صمم % % PageV01P1905 البحر : - 1(@)(@@) % تنسك في شهر الصيام معذبي % % وفي جفنه سيف على الناس عازم % % 2(@)(@@) % فيا حربا من فاتر الطرف فاتك % % يفطر 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms374# أكباد الورى وهو صائم % % PageV01P1906 البحر : - 1(@)(@@) % بأبي غزالا جال في وجناته % % ماء النعيم ولونه متعندم % % 2(@)(@@) % لاغرو أن أهوى بوجنته إلى % % زهر الشقيق فطالما حن لدم % % PageV01P1907 البحر : - 1(@)(@@) % بروحي مقلة لك في فؤادي % % وفي جسدي لها جرح وسقم % 2(@)(@@) % توفر لوعتي وتصيب قلبي % % فلي منها على الحالين سهم % % PageV01P1908 البحر : - 1(@)(@@) % سرو اللشآم وغرب الجفون % % تفطر منا بنار الهموم % % 2(@)(@@) % ففي الشرق أحبابنا كالبدور % % وفي الغرب أدمعنا كالنجوم % % PageV01P1909 البحر : - 1(@)(@@) % بروحي تياه يحلل أدمعي % % وكيف يحل الماء أكثره دم % % 2(@)(@@) % بكت مقلني العبرى وأسياف جفنه % % من التيه في أغمادها تتبسم % % PageV01P1910 البحر : - 1(@)(@@) % عذول لست أسمع منه عذلا % على غيداء مثل البدر تما % % 2(@)(@@) % له طرف ضرير عن سناها % % ولي أذن عن الفحشاء صما % % PageV01P1911 البحر : - 1(@)(@@) % آها لشمل وقد وهي سلكه % وكان ذا در بعبد الرحيم % % 2(@)(@@) % فليتني لاقيت منه الردى % % وعاش ذاك الدر درا يتيم % % PageV01P1912 البحر : - 1(@)(@@) % و قالع من جنتي خده % % نبتا به العشاق قد هاموا % % 2(@)(@@) % يقول محتجا إذا لمته % % لا يدخل الجنة نمام % % PageV01P1913 البحر : - 1(@)(@@) % محبوبتي دنيا جفت بعدما % % جادت وكانت نزهة الهائم % % 2(@)(@@) % كانت مع الإير زمان الصبا % % وهكذا الدنيا مع القائم % % PageV01P1914 البحر : - 1(@)(@@) % يا رب كأس صاغها لي شادن % نعم الصياغة في الزمان المعلم % % 2(@)(@@) % فأخذتها كالتاج وهو مكلل % ورددتها مثل السوار بمعصم % % PageV01P1915 البحر : - 1(@)(@@) % خليلي ان العام عام مبارك % % فلا الفقر نخشاه ولا الفكر حائم % % 2(@)(@@) % اذا نقط الغيث استدارت وأخصبت % % فما هي في التحقيق الا دراهم % % PageV01P1916 البحر : - 1(@)(@@) % باع صديقي لجام بغلته % % ليشتري الخبز منه والأدما % % 2(@)(@@) % فآها عليه راحت وظيفته % % فهو على الحالين يأكل اللجما % % PageV01P1917 البحر : - 1(@)(@@) % لاح الإمام لطلاب اللهى علما % وماس بانا على أدراجه القلم % % 2(@)(@@) % فقل لمن سار للآمال يقصدها % % يا ساري القصد هذا البان والعلم % % PageV01P1918 البحر : - 1(@)(@@) % لئن جرحت خدي فلانة مقلتي % % لقد جرحاها بالدموع السواجم % % 2(@)(@@) % شكى خدها لحظي ولحظي خدها % % ولا ظالم الا ويبلى بظالم % % PageV01P1919 البحر : - 1(@)(@@) % عش يا محمد في الدارين متصلا % حمدا وأجرا وفز في ذا وذا ودم % % 2(@)(@@) % جاورت مدحك بالمدح احتوى علما % فحبذا أنتم يا جيرة العلم % % PageV01P1920 البحر : - 1(@)(@@) % هنئت قاعة أنعم وفضائل % مسعودة بك يا إمام متممه % % 2(@)(@@) % قد رخمت فسطت بعنق 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms375# حسودها % % يا حبذا في الصيغتين مرخمه % % PageV01P1921 البحر : - 1(@)(@@) % قلت لإحسان وزير التقى % % في مطلب الميراث لي مغنم % % 2(@)(@@) % من بركة القطن لكتانها % % فقال هذا طلب ملجم % % PageV01P1922 البحر : - 1(@)(@@) % يا سيدي يا فلان الدين لا برحت % % سوائم القصد ترعى تجت ظلكم % 2(@)(@@) % كانت أياديكم قدما تواصلنا % % والآن أحوج ما كنا لوصلكم % % PageV01P1923 البحر : - 1(@)(@@) % قالت وإيري قد تراخى أما % % يطبخ في منزلنا لحم % % 2(@)(@@) % فقلت والمقصود قد بان لي % % كفي ولا لحم ولا عظم % % PageV01P1924 البحر : - 1(@)(@@) % شكرا لإيري الذي يبلغني % % ما أتمنى من ساعة الحلم % % 2(@)(@@) % قام دجى الليل طالبا غرضي % % ونمت عن حاجتي ولم ينم % % PageV01P1925 البحر : - 1(@)(@@) % يا إمام التقى كذا كل عيد % % تتلقى هنا وتمنح نعمى % % 2(@)(@@) % و نرى مجدك الحلي وجدوا % % ك فتملا العيون شحما ولحما % % PageV01P1926 البحر : - 1(@)(@@) % مذ أضامتني الليالي جفاني % % كرم الافتخار والإكرام % % 2(@)(@@) % فتذكرت قول أحمد قدما % لا افتخارا الا لمن لا يضام % % PageV01P1927 البحر : - 1(@)(@@) % قد سرت الأمة والدين اذ % % قالوا أتى السلطان نجل كريم % % 2(@)(@@) % فبشروها بمليك رضا % وبشروه بغلام حليم % % PageV01P1928 البحر : - 1(@)(@@) % تؤخرني سادات دهري وقد دروا % % صفاتي وأنسابي التي هي أكرم % % 2(@)(@@) % كأنهم قد خالفوا قول أحمد % فما عندهم الا النسيب المقدم % % PageV01P1929 البحر : - 1(@)(@@) % يا سيدي أهلتني وأمرتني % % بلزوم بابك في كتاب أرقم % % 2(@)(@@) % فلزمت مع نسب الولاء فلا تقل % % هذا كتاب لزوم ما لا يلزم % % PageV01P1930 البحر : - 1(@)(@@) % قد أسرج الشيب في فودي وألجمني % % عما أعانيه من نقض وإبرام % % 2(@)(@@) % فما التغافل عن شأن الرحيل إلى % % دار البلى بعد إسراج وإلجام % % PageV01P1931 البحر : - 1(@)(@@) % بروحي من في وجنتيه إذا بدا % % محاسن تشقي ناظري وتنعم % % 2(@)(@@) % يحدث بالجفن الذي يجرح الحشا % % فأجفانه في الحالتين تكلم % % PageV01P1932 البحر : - 1(@)(@@) % يا سقيم الجفن أسقمني % % وحلا في حبه ألمي % % 2(@)(@@) % إن حكت عيناك لي جسدا % فلقد حاكت على السقم % % PageV01P1933 البحر : - 1(@)(@@) % يا ملكا لا يخيب زائره % % دعوة ضيف منقح النظم % % 2(@)(@@) % يبكي على رسمه ولا عجب % لشاعر إن بكى على رسم % % PageV01P1934 البحر : - 1(@)(@@) % و لم أنس في رسم الأحبة موقفا % أضفت به للجسم سقما إلى سقم % % 2(@)(@@) % و قد رفعت عيناي قصة دمعها % % فوقع فيها الوجد يجري على الرسم % % PageV01P1935 البحر : - 1(@)(@@) % سكندري قلت لما بدا % % في صحبه كالبدر 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms376# في الأنجم % % 2(@)(@@) % يا مانع الثغر وحق الهوى % % إني لمشتاق إلى اللثم % % PageV01P1936 البحر : - 1(@)(@@) % ظفرت على رغم الرقيب بطيفها % % وقد طردت خلف الثريا النعائم % % 2(@)(@@) % فيا لرقيب ليس يرزق نظرة % % وآخر يأتي رزقه وهو نائم % % PageV01P1937 البحر : - 1(@)(@@) % وقفت على سفح الثنية باكيا % فكل مكان بالثنية عندم % 2(@)(@@) % و أدوعت قلبي في ثراها مقبلا % كأني لهاتيك الودائع أختم % % PageV01P1938 البحر : - 1(@)(@@) % سلت صوارمها من الأجفان % % فسطت على الآساد والغزلان % % 2(@)(@@) % وتبسمت عن لؤلوء متمنع % % حتى بكيت عليه بالعقيان % % 3(@)(@@) % غيداء أستجلي البدور لوجهها % % إذ ليس حظي منه غير عيان % % 4(@)(@@) % تركية للقان ينسب خدها % % واصبوني منه بأحمر قاني % % 5(@)(@@) % خد يريك تنعما وتلهبا % يا من رأى الجنات في النيران % % 6(@)(@@) % ومحاسن تزهو وتخلف عهدها % % وكذا يكون الروض ذا ألوان % % 7(@)(@@) % كالجنة الزهراء إلا أن لي % % من أدمعي فيها حميما آن % % 8(@)(@@) % يحمي نعيم خدودها أن يحتنى % % أو ما سمعت شقائق النعمان % % 9(@)(@@) % ترنو لواحظها إلى عشاقها % % فتصول بالأسياف في الأجفان % % 10(@)(@@) % و يهز حلو قوامها مرج الصبا % % هز الكماة عوالي المران % % PageV01P1939 11(@)(@@) % ان صدها عني المشيب فطالما % % عطفت شمائبلها بما أرضاني % % 12(@)(@@) % و بلغت مالا سولته شبيبتي % % وفعلت ما لا ظنه شيطاني % % 13(@)(@@) % و جنيت من ثمر الذنوب تعمدا % % لما رأيت العفو حظ الجاني % % 14(@)(@@) % و حلبت هذا الدهر أشطر عيشه % % فوجدت زبدتها متاعا فاني % % 15(@)(@@) % و سبرت اخلاق الكرام فلم أجد % % في الفضل للملك المؤيد ثاني % % 16(@)(@@) % ملك ترنحت المنابر باسمه % % حتى ادكرن معاهد الأغصان % % 17(@)(@@) % بادي الوقار اذا احتبى وحبا الندى % % أبصرت سير السيل من نهلان % % 18(@)(@@) % قامت بسؤدده مآثر بيته % % وعلى العماد إقامة البنيان % % 19(@)(@@) % قسما بمن أعلى وأعلن مجده % % وأفاض أنعمه بكل مكان % % 20(@)(@@) % ما حاد عني الفقر حتى صحت في % % مدحي أنا بالله والسلطان % % PageV01P1940 21(@)(@@) % فوجدت للنعماء ملء مآربي % % ووجدت للأوصاف ملء لساني % % 22(@)(@@) % و مدحت من نشرت مدائح مجده % % ذكري فلو لم يعطني لكفاني % % 23(@)(@@) % ملكا أبر على الأولى متأخرا % عنهم كبسم الله في العنوان % % 24(@)(@@) % تعب الأنامل لا يغب نواله % % إن العلى والمجد للتعبان % % 25(@)(@@) % اعطى وقد منع الغمام وأرشدت % % أراؤه والنجم كالحيران % % 26(@)(@@) % و اعتادت الهيجاء منه غضنفرا % سار من اليزني في خفان % % 27(@)(@@) % تتالف العقبان 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms377# فوق رماحه % % إلف الحمام على غصون البان % % 28(@)(@@) % و يصح علم الكيمياء وسيفه % % فترى اللجين يعود كالعقبان % % 29(@)(@@) % و يقول فيض فعاله ومقاله % % مرج النهى بحرين يلتقيان % % 30(@)(@@) % يا مشتري سلع الثناء بماله % % هنئت مرتبة على كيوان % % PageV01P1941 31(@)(@@) % صانت يداك عن الأنام وسائلي % % وثني حماك عن البلاد عناني % % 32(@)(@@) % فمحوت الا من ثناك خواطري % % ونفضت الا من نداك بناني % % 33(@)(@@) % وتركت مدح العالمين وذمهم % % وشغلت عن هذا الندى في شاني % % 34(@)(@@) % وأقمت متصل الرجاء بواحد % لم يختلف في الفضل منه اثنان % % 35(@)(@@) % متسلسل الكلمات في أوصافه % % متقيدا بصنائع الاحسان % % 36(@)(@@) % لا يعدم الدهر الأخير بدائعا % تنهال بين سماحة وبيان % % 37(@)(@@) % أكتال بالمكيال فضل هباته % % وأبيحه الأمداح بالأوزان % % PageV01P1942 البحر : - 1(@)(@@) % ألا من لمسلوب الفؤاد رهينه % % معنى بمحجوب الوداد ضنينه % % 2(@)(@@) % أخو شجن يرعى النجوم كأنما % % تعلق أعلى هدبه بجبينه % % 3(@)(@@) % تجلده شك اذ لام لائم % ولكن فرط الوجد عقد يقينه % % 4(@)(@@) % وفي قلبه داء دفين من الأسى % % فلا غرو أن يبكي لأجل دفينه % % 5(@)(@@) % وظبي له في أسرة الترك نسبة % % وفي الهند معنى من مضاء جفونه % % 6(@)(@@) % من الطالبي كتم الغرام صبابة % % وأحسن بمكتوم الغرام مصونه % % 7(@)(@@) % كتمت الهوى في عشقه متفلسفا % فأصبح عشقي قائلا بكمونه % % 8(@)(@@) % وعاينت في خديه خط عذاره % % فأقسمت في صحف الجمال بنونه % % 9(@)(@@) % يحن لي قلبي فلله من رأى % % حمى يتبع الغادين رجع حنينه % % 10(@)(@@) % هو الحب يحلو فيه للمرء دمعه % % ويطربه في الليل صوت أنينه % % PageV01P1943 11(@)(@@) % برغمي طرف غاب عنه عزيزه % % فعوضه ماء البكا بمهينه % % 12(@)(@@) % روى عن معين الدمع طرفي فاسمعوا % % حديث جوى قلبي عن ابن معينه % % 13(@)(@@) % واني لجلد في ممارسة الهوى % % مدل بمهدي الولاء أمينه % % 14(@)(@@) % يقوم بنصري في الصبابة عون من % % أقام ابن أيوب عمادا لدينه % % 15(@)(@@) % مليك تولى الفضل بعد ضياعه % % وهذب هذا الدهر بعد خبونه % % 16(@)(@@) % ومد يمينا يعذر البحر والحيا % % اذا حلفا يوم الندى بيمينه % % 17(@)(@@) % أخو صدقات تقدر المدح قدره % % فما يشتري في المدح غير ثمينه % % 18(@)(@@) % اذا جلب الناس الثناء لبابه % % فما جلبوا الا لباب زبونه % % 19(@)(@@) % وما ذاك شحا بالثناء وانما % % سجية فياض الغمام هتونه % % 20(@)(@@) % شج بالعلى والعلم والبأس والندى % % فلله ما أحلى حديث 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms378# شجونه % % PageV01P1944 21(@)(@@) % له منزل تهوى المقلصد نحوه % % هوي حمام الأيك نحو وكونه % % 22(@)(@@) % تدفق طوفان الندى بجنابه % % فأمست مطايا الوفد مثل سفينه % % 23(@)(@@) % اذا طلب الملك المؤيد معسر % رأى بشره في وجهه كضمينه % % 24(@)(@@) % عجبت لبشر ضامن الوجه اذ غدا % % يطالبه عافي الندى بديونه % % 25(@)(@@) % وأروع يهتز الزمان لأمره % % وما الطود أرسى جانبا من سكونه % % 26(@)(@@) % اذا حاول الفعل الجليل وجدته % % بلا قده في المعضلات وسينه % % 27(@)(@@) % عزيمة من لا يصعب الجد في العلى % % عليه كأن الجد بعض مجونه % % 28(@)(@@) % كثير السرى ما بين مشتجر القنا % % فيالك ليثا سائرا في عرينه % % 29(@)(@@) % يلاقي العدى يوم الوغى متبسما % كأنك قد لاقيته بخدينه % % 30(@)(@@) % وتلهيه في الهيجاء رنة قوسه % اذا وتر ألهى امرأ برنينه % % PageV01P1945 31(@)(@@) % ولو شاء أغناه عن الجيش ذكره % % ورب حسام هازم بطنينه % % 32(@)(@@) % أيا ملكا أغنى عن الغيث جوده % % وأغنته حومات الوغى عن حصونه % % 33(@)(@@) % بك ارتد مشكو الزمان عن الأذى % % وأطلق أبناء المنى من سجونه % % 34(@)(@@) % وقد كان ذا همز يحاذر فانتهى % % إلى مده بعد الإباء ولينه % % 35(@)(@@) % وكم لك عندي من ندى يفضل الثنا % % ويحلف أن الشعر غير قرينه % % 36(@)(@@) % اذا قلت قد قابلته بقصيدة % % بدا غيره مستظهرا بكمينه % % 37(@)(@@) % فدونك مدحا من قريحة مادح % يقابل أبكار الصلاة بعونه % % 38(@)(@@) % رأى أنك البحر الذي طاب ورده % % فجاءك من نظم القريض بنونه % % PageV01P1946 البحر : - 1(@)(@@) % أخفي الأسى ولسان دمعي يعلن % وأرى الدمى ترنو الي فافتن % % 2(@)(@@) % وتظل تعدي الغانيات مدامعي % % فمدامعي كعهودها تتلون % % 3(@)(@@) % بأبي التي أسكنتها في خاطري % % وسرت فسار مع النزيل المسكن % % 4(@)(@@) % لمياء لي دين على ميعادها % % مع أن قلبي عندها مسترهن % % 5(@)(@@) % تبدي اللآلي منطقا وتبسما % فكأن فاها للآلي معدن % % 6(@)(@@) % ويلومني فيها خلي ما درى % % الشمس أم تلك المليحة أزين % % 7(@)(@@) % يا لائمي انظر حسن تلك وهذه % % وادفع ملامك بالتي هي أحسن % % 8(@)(@@) % كيف التصبر عن سعاد وحسنها % % كالفضل في الملك المؤيد بين % % 9(@)(@@) % ملك على عهد المعالي ثابت % % لكنه في فضله متفنن % % 10(@)(@@) % بينا يرى بحر العلوم اذا به % % بحر الندى فحديثه متشجن % % PageV01P1947 11(@)(@@) % ظعن الكرام الأولون وأقبلت % % أيامه فكأنهم لم يظعنوا % % 12(@)(@@) % لم يبق لولا جوده ومديحنا % % مال يكال ولا مقال يوزن 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms379# % % 13(@)(@@) % من أين للآمال مثل مقامه % % ألروض أفيح والغمائم هتن % % 14(@)(@@) % نعم الملاذ لمن يلوذ بظله % % من شر ما يخشى وما يتحصن % % 15(@)(@@) % خذ عن عواليه أحاديث الوغى % % فحديثها عن راحتيه يعنعن % % 16(@)(@@) % شرف القتيل بسيفه فقتيله % % في الجو ما بين الحواصل يدفن % % 17(@)(@@) % وتطابقت أفعاله لعفاته % % فالكيس تهزل والحقائب تسمن % % 18(@)(@@) % كرم كفيض السيل الا أنه % % لا مانع السقيا ولا متأسن % % 19(@)(@@) % وعلا يموت به الحسود تحسرا % فكأنه بثيابه متكفن % % 20(@)(@@) % ما ضر معشر حاسديه لو أنهم % % فطنوا لسر الله فيه وأذعنوا % % PageV01P1948 21(@)(@@) % ألله قدر في العزائم أنهم % % يتحارفون وأنه يتسلطن % % 22(@)(@@) % يا ابن الملوك اذا دعاهم مقتر % لانوا وان دعيت نزال اخشوشنوا % % 23(@)(@@) % تسب كصدر الرمح إلا أنه % % عند المحامد ليس فيه مطعن % % 24(@)(@@) % لله دهرك إنه الدهرالذي % % سيء الكفور به وسر المؤمن % % 25(@)(@@) % شيدت باسماعيل أركان العلى % % فاليه يلتجيء الرجاء ويركن % % 26(@)(@@) % ودعا ندى ابن علي كل مودة % حتى استوى الشعي والمتسنن % % 27(@)(@@) % فليعذر المداح فيه فانهم % % بالعجز عن أدنى المدى قد أيقنوا % % 28(@)(@@) % عنت القرائح عن بلوغ صفاته % % وتسترت خلف الشفاه الألسن % % PageV01P1949 البحر : - 1(@)(@@) % لا تسألوا في الحب عن شأني % % فقد كفى تعبير أجفاني % % 2(@)(@@) % هويت من طلعته روضة % % ففاضت العين بغدران % % 3(@)(@@) % غصن من البان اذا ماانثنى % % أبصرت فيه ألف بستان % % 4(@)(@@) % أشبهت في حبيه ورق الحمى % % فكلنا نبكي على البان % % 5(@)(@@) % بالروح أفدي وجنتي مالك % كأنه من حور رضوان % % 6(@)(@@) % فر عن الجنات من تيهه % % وعذب الصب بنيران % % 7(@)(@@) % ظبي إلى القاني له نسبة % واحربا من خده القاني % % 8(@)(@@) % تقول لي نشطة أعطافه % % ظل الذي بالرمح حاكاني % % 9(@)(@@) % حلوان من عطفي قد أينعا % % فكيف تحكيها بمران % % 10(@)(@@) % يا فارغ الفكرة من شقوتي % % يعينني من فيك أشقاني % % PageV01P1950 11(@)(@@) % لا وندى ابن الافضل المرتجي % % لا نكثت بيعة أشجاني % % 12(@)(@@) % ذاك الذي أنقذني جوده % % من مخلب الدهر فأحياني % % 13(@)(@@) % ولم يزل تنويه تنويله % % حتى حمى وجهي وأغناني % % 14(@)(@@) % قالت لآمالي يداه انفذي % % لا تنفذي إلا بسلطان % % 15(@)(@@) % أفضي لاسماعيل بيت العلى % % فشاد منه أي أركان % % 16(@)(@@) % مؤيد تفصح يوم الوغى % % في مدحه ألسن خرسان % % 17(@)(@@) % ذو راحة في البذل تعبانه % % وما العلى إلا لتعبان % % 18(@)(@@) % تجني على المال فتجني الثنا % % يا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms380# حبذا المجنى واالجاني % % 19(@)(@@) % تجري على كفه نظم الرجا % % ما بين سيحان وجيحان % % 20(@)(@@) % أكرم به في الدهر من أوحد % لم يختلف في فضله اثنان % % PageV01P1951 21(@)(@@) % لو أن للبدر سنا مجده % % ما روع البدر بنقصان % % 22(@)(@@) % ولو دعاه حي عدوان ما % % رماهم الدهر بعدوان % % 23(@)(@@) % للدين والدنيا جمال به % % كأنه روح لجثمان % % 24(@)(@@) % يلقاك من علياه أو علمه % % بملء أبصار وأذهان % % 25(@)(@@) % باسط كفيه لطلابه % % فهو الورى وهي البسيطان % % 26(@)(@@) % له اذا حاولت نهب اللهى % % خزائن ليست بخزان % % 27(@)(@@) % للجود في أموالها مثلما % % في قصتي عبس وذبيان % % 28(@)(@@) % أصبحت من غلمان أبوابه % % والسعد من جملة غلماني % % 29(@)(@@) % أطوي على محض الولا مهجتي % % وأنشر المدح بتبيان % % 30(@)(@@) % فكل أمداحي في فضله % % أبيات سلمان وحسان % % PageV01P1952 31(@)(@@) % يا رب هبه عمر نوح فقد % % جاء من الجود بطوفان % % PageV01P1953 البحر : - 1(@)(@@) % اذا ظفرت يوما بقربكم المنا % % فلست أبالي من تباعد أو دنا % % 2(@)(@@) % ولعت بعشقي فيكم فتأكدت % % معانيه فاستولى فأصبح ديدنا % % 3(@)(@@) % ولما جنى طرفي رياض جمالكم % % جعلتم سهادي في عقوبة من جنى % % 4(@)(@@) % أجيراننا ان عفتم السفح منزلا % وأخليتموا من جانب الجزع موطنا % % 5(@)(@@) % فقد حزمتم دمعي عقيقا ومهجتي % % غضا وسكنتم من ضلوعي منحنى % % 6(@)(@@) % وأرسلتم طيف الخيال لمقلة % اذا ما أتاها استصحب السهد ضيفنا % % 7(@)(@@) % وكم فيكم يوم الوداع لشقوتي % % هلال سما غصن زها رشأ رنا % % 8(@)(@@) % اذا شمت تحت الجتاجبين جفونه % % أرى السحر منها قاب قوسين أو دنا % % 9(@)(@@) % أما والذي لو شاء قصر بينكم % % فلم يتعب الطيف المردد بيننا % % 10(@)(@@) % لقد خلقت للعشق فيكم جوانحي % % كما خلق الملك المؤيد للثنا % % PageV01P1954 11(@)(@@) % مليك له في العلم والجود همة % ترى المال في الإقتار والعيش في العنا % % 12(@)(@@) % بني رتبا قد أعرب المدح ذكرها % % فيا عجبا من معرب كيف يبتنى % % 13(@)(@@) % وأولى الندى حجتى اقتنى الحمد مخلصا % فأكرم بما أولى وأعظم بما اقتنى % % 14(@)(@@) % وجلى ثغور الأرض من قلح العدى % % ولم لا وقد جر الأراك من القنا % % 15(@)(@@) % يكاد يعد النبل في حومة الوغى % % أقاحا وأطراف الأسنة سوسنا % % 16(@)(@@) % أخو فعلات تصرف الروع بائنا % إلى كلمات تنفث السحر بيننا % % 17(@)(@@) % لئن أجريت ذكرى المعادن انني % % أرى أرضه للعلم والجود معدنا % % 18(@)(@@) % خليلي هذا من حماة 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms381# محله % % فعوجا على الأرض التي تنبت الهنا % % 19(@)(@@) % فلا جلق بالسهم تمنع قاصدا % ولا حلب الشهباء تلبس جوشنا % % 20(@)(@@) % غنيت بجدواه فأطربني السرى % % ولا عجب أن يطرب المرء بالغنا % % PageV01P1955 21(@)(@@) % ولا عيب فيه غير أني قصدته % % فأنستني الأيام أهلا وموطنا % % 22(@)(@@) % تعلمت أنواع الكلام برفده % % فأصبحت أعلا الناس شعرا وأحسنا % % 23(@)(@@) % اذا قيل من رب المكارم في الورى % % أقل هو أو رب القريض أقل أنا % % PageV01P1956 البحر : - 1(@)(@@) % ملي الحسن حالي الوجنتين % % متى يقضي وعود الوصل ديني % % 2(@)(@@) % أبثك إن عاذلي المعنى % % رآك بعين حب مثل عيني % % 3(@)(@@) % فحاكى قلبه قلبي خفوقا % وحكمت الهوى في الخافقين % % 4(@)(@@) % لمثل هواك تجنح كل نفس % وتسفح كل ناظرة بعين % % 5(@)(@@) % صددت فما الأسى عندي بقل % ولا دمعي بدون القلتين % % 6(@)(@@) % ولا جلد على انكار دهر % رمى قلبي الوحيد بفرقتين % % 7(@)(@@) % مضى المحبوب ثم مضى شبابي % % وأي العيش يصلح بعد ذين % % 8(@)(@@) % هما هجرا على رغمي فأرخ % % حديث تلهفي بالهجرتين % % 9(@)(@@) % بروحي عاطر الأنفاس ألمى % % رشيق القد ساجي المقلتين % % 10(@)(@@) % يهز مثقفا من معطفيه % % ومن جفنيه يجذب مرهفين % % PageV01P1957 11(@)(@@) % له خالان في دينار خد % تباع له القلوب بحبتين % % 12(@)(@@) % وحول نقا سوالفه عذار % كما شعرت نقوش في لجين % % 13(@)(@@) % أظل اذا نظرت لوجنتيه % % أنزه في النقا والرقمتين % % 14(@)(@@) % فيالله من غصن فريد % وفي خديه كلتا الجنتين % % 15(@)(@@) % أما وحباب مبسمه المفدى % % على معسول كأس المرشفين % % 16(@)(@@) % لقد عذبت موارده ولكن % % ندى المنصور أحلى الموردين % % 17(@)(@@) % ندى ملك له في الملك جد % % وجد فهو عدل الشاهدين % % 18(@)(@@) % يمد بساعدين إلى المعالي % % ويتعب في النوال براحتين % % 19(@)(@@) % كثير السعي في شرف ومجد % قليل الشكو من ضجر وأين % % 20(@)(@@) % كأن هواه في حب العطايا % % يطالبه بدين لا بدين % % PageV01P1958 21(@)(@@) % اذا ما أشرقت خداه بشرا % % فعوذها برب المشرقين % % 22(@)(@@) % وإن حمل السلاح ليوم حرب % فقل في الليث ماضي الماضغين % % 23(@)(@@) % يهش السيف في يمناه عجبا % % ويبسم بالهنا سن الرديني % % 24(@)(@@) % ورب طلوب حلم قد دعاه % % فعاد بهين الأخلاق لين % % 25(@)(@@) % بأروع ناصري الذكر مافي % % رواية فضله مثقال رين % % 26(@)(@@) % يصيخ للفظ مادحه بأذن % وينعم من خزائنه بعين % % 27(@)(@@) % ويجمع بالثنا والأجر دنيا % % وآخره فيرضى الضرتين % % 28(@)(@@) % على حين الشبيبة في اقتبال % % وفرع 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms382# الملك زاهي المعطفين % % 29(@)(@@) % يقل لذكره الاقبال قدما % وكيف يقاس ذو زين بشين % % 30(@)(@@) % فلا تتبع لتبع ذكر جور % % ودعنا من رعونة ذي رعين % % PageV01P1959 31(@)(@@) % أقام محمد للفضل شرعا % محاما كان من شك ومين % % 32(@)(@@) % ورادف حسن خلق حسن خلق % % فلم يقنع باحدى الحسنيين % % 33(@)(@@) % كذا فليبق في أفق المعالي % % ووالده بقاء الفرقدين % % 34(@)(@@) % أصوغ له مدائح لم يصغها % % على سيف العلى نجل الحسين % % 35(@)(@@) % وأطلق فيه ألفاظا تسامت % % على ألفاظ رهن المحسنين % % PageV01P1960 البحر : - 1(@)(@@) % بأبي مائسة يثني على % % قدها بان النقا اذ تنثني % % 2(@)(@@) % نطقت وابتسمت عن جوهر % % يا له في فمها من معدن % % 3(@)(@@) % فاسقني صرف الحميا أطلسا % % معها يوم اللقا لا مع دني % % 4(@)(@@) % درة أو زهوة أو زهرة % فاجتبي أو فاجتلي أو فاجتني % % 5(@)(@@) % وامتدح من آل شاد ملكا % طاهر السر كريم العلن % % 6(@)(@@) % أفضل المنعت والذات فقل % % وانظم الأبيات فيه وانثني % % 7(@)(@@) % وادع من يدع لقا أمداحنا % % وهو عنها بأياديه عني % % 8(@)(@@) % ملك لولا حماه الرحب ما % % جلب الشعر بأغلى ثمن % % 9(@)(@@) % تقتني الجوهر أملاك الردى % % وهو للألفاظ منا يقتني % % 10(@)(@@) % عاقني الفخر عن السعي فيا % % حسدي للطرس إذ يسبقني % % PageV01P1961 11(@)(@@) % قف بباب الملك الأفضل يا % % طرسي الماثل واشرح شجني % % 12(@)(@@) % سيدي بعد نداك المرتجى % % لا تسل عن حالي الممتحن % % 13(@)(@@) % أنا والجارية القفحاء في % % حال جوع مخرس للألسن % % 14(@)(@@) % قد عرانا من طوانا زمن % ما عهدنا مثله من زمن % % 15(@)(@@) % ولقد تشكو فما أفهمها % % ولقد أشكو فما تفهمني % % 16(@)(@@) % غير أني بالجوى أعرفها % % وهي أيضا بالجوى تعرفني % % 17(@)(@@) % وإلى بابك أنهينا الرجا % % وهو أولى باتصال المنن % % 18(@)(@@) % دمت ذا إقبال سعد خادم % وندى كف الينا محسن % % PageV01P1962 البحر : - 1(@)(@@) % العيد أنت وهذا عيدنا الثاني % % ماللهنا عن قلوب الخلق من ثاني % % 2(@)(@@) % عيدان قد أطربا ملكا فراسلها % % بمطربات من الأقلام عيدان % % 3(@)(@@) % فاهنأ به وبألف مثله أمما % وأنتما في بروج السعد إلفان % % 4(@)(@@) % مفطرا فيه أكباد العداة كما % % فطرت أفواه أحباب بإحسان % % 5(@)(@@) % في عمر نوح لأن الفال أفهمنا % % لما أتى جودك الأوفى بطوفان % % 6(@)(@@) % تجري بأمداحك الأقلام نافذة % % بالمبدعات لأسماع وآذان % % 7(@)(@@) % يا ناصر الدين والدنيا لقد نفذت % % أقلام مدحك في الدنيا بسلطان % % 8(@)(@@) % مقام ملكك في عز 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms383# ومنتسب % % كسرى بنسبته من آل ساسان % % 9(@)(@@) % فضلته بأواوين ومعدلة % زادت فكيف بتوحيد وإيمان % 10(@)(@@) % لك المفاخر في عجم وفي عرب % وهيبة الملك في إنس وفي جان % PageV01P1963 11(@)(@@) % فلا حسود لشان قد بلغت فقد % % عظمت عن حاسد فيه وعن شاني % % 12(@)(@@) % وهل يقايس بهرام الزمان بمن % % علا على قدر بهرام وكيوان % 13(@)(@@) % وهل يماثل بالنعمان ذو خدم % له على كل باب ألف نعمان % 14(@)(@@) % دانت لك الخلق من بدو ومن حضر % % وفاض جودك في قاص وفي داني % % 15(@)(@@) % هذي المدائن من أقصى مشارقها % % لمنتهى الغرب في طوع وإذعان % 16(@)(@@) % والسد تسرح أسراب الوحوش به % % بالأمن ما بين آساد وغزلان % % 17(@)(@@) % لا تقطع الطرق عن سار إلى بلد % إلا منازه أنهار وغدران % 18(@)(@@) % إن يسم سلطان مصر في حمى بلد % ترجف على أنها آذان حيطان % % 19(@)(@@) % كأن جودك قد قالت سوابقه % % ألأرض ظلي وكل الناس ضيفان % % 20(@)(@@) % نعم لك الملك موروث ومكتسب % % وفي وزاد فنعم البان والباني % % PageV01P1964 21(@)(@@) % زادت أياديك عن حد القياس فما % % ألفاظ قس وما ألفاظ سحبان % % 22(@)(@@) % لو تسأل الشهب عن علياء أسرته % % ألفيته جاز عنها منذ أزمان % 23(@)(@@) % محمد قد نشا في حجره حسن % وقصر الحظ بي عن لفظ حسان % 24(@)(@@) % لكنه بالولا والنظم أرشدني % % حتى لحقت بحسان وسلمان % % 25(@)(@@) % له بشعري إمساك بمعرفة % وفي البسيطة تسريح بإحسان % % 26(@)(@@) % وأمسك الضعف نطقي برهة فرقي % % بالمدح منظر ما قد كان أولاني % % 27(@)(@@) % ضعف تضاعف في فكري وفي بدني % % حتى تحيف اسراري واعلاني % % 28(@)(@@) % وعطلتني عن الأوزان أنظمها % % مدحا وما عطلت جدواه ميزاني % % 29(@)(@@) % ان امتدحه بشعري أو بكسوته % % فسوف تمدحه في الترب أكفاني % % 30(@)(@@) % كفان في الجود جادت لي جوائزها % % وكان خير سماع الشعر كفاني % % PageV01P1965 31(@)(@@) % وقدمتني على الأقران ذو نعم % % حتى جدعت به أنف ابن جدعان % % 32(@)(@@) % وقال قوم بما قد نلت تقدمه % % فقلت مذ أمر السلطان ديواني % % PageV01P1966 البحر : - 1(@)(@@) % كيف قاسوا قد الحبيب بغصن % % ذاك يجنى وذا على الناس يجني % % 2(@)(@@) % كيف حاكوا ألحاظه بحسام % وهي تفري حد الحسام بجفن % % 3(@)(@@) % حبذا عاطر اللمى والثنايا % % فاتر المقتلتين حلو التجني % % 4(@)(@@) % كلما هز بالمعاطف رمحا % قرعت أنمل الصبابة سني % % 5(@)(@@) % يا خضوعي هلا سوى الحب حتى 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms384# % % كان جود الوزير يدفع عني % % 6(@)(@@) % أبسط العالمين بأسا وجودا % يوم يفني العداة أو يوم يغني % % 7(@)(@@) % والذي راحتاه تسري ليسر % يرتجي نفعها ويمنى ليمن % % 8(@)(@@) % كل يوم له من الفضل معنى % % ساحبا ذيله على ألف معن % 9(@)(@@) % وسخاء على العفاة بتبر % في زمان لم يسخ فيه بتبن % % 10(@)(@@) % ان أردنا الهدى فأنوار شمس % % أو أردنا الندى فأنواء مزن % PageV01P1967 11(@)(@@) % أعربت ذكره مباني علاه % % فعجبنا لمعرب اللفظ مبني % % 12(@)(@@) % وثنى للعلى عزائم أضحت % % فوق ما يطنب البليغ ويثني % % 13(@)(@@) % وحمى الملك حين جرد فيه % % همة تجعل الجبال كعهن % 14(@)(@@) % فمعاديه في سوآء جحيم % ومواليه بين جنات عدن % 15(@)(@@) % يا وزيرا إلى حماه لجأنا % % فلجأنا من الخطوب بحصن % % 16(@)(@@) % وحبانا مال الصلات بكيل % فجلبنا له المديح بوزن % % 17(@)(@@) % حبذا خلعة كعرضك بيضا % % ء بها ابيض للعدى كل جفن % % 18(@)(@@) % فوق خضراء كالرياض رواء % جملتها شمائل ذات حسن % % 19(@)(@@) % يا لها من شمائل قائلات % ليس تحت الخضراء أكرم مني % % 20(@)(@@) % لا عدت بابك السعود فانا % % قد وجدناه غاية المتمني % % PageV01P1968 البحر : - 1(@)(@@) % بكيت وما يجدي البكاء على العاني % % وتثبت كفي للأحبة أشجاني % % 2(@)(@@) % كأن زماني خاف لحنا فلم يكن % % ليجمع بين الساكنين لاوطاني % % 3(@)(@@) % وقالوا عفت حسبان ممن تحبه % % كأن لم تكن شمس الكمال بحسبان % % 4(@)(@@) % فقلت لجفني البعيد كراهما % % قفا نبك من ذكرى ديار وجيران % % 5(@)(@@) % أأحبابنا أعدا تغير عهدكم % % دموعي فأمست مثلكم ذات ألوان % % 6(@)(@@) % وقد كان يكفي أول من صدودكم % % فما للنوى ينشي صدودكم الثاني % % 7(@)(@@) % ومما شجاني أن جفني ساهر % على فتان اللواحظ وسنان % % 8(@)(@@) % تعشقته لا قول فيه لعاذل % لدي ولا في حسنه الفرد قولان % % 9(@)(@@) % اذا جال فكري في لماه وخده % % تنزهت ما بين العذيب ونعمان % % 10(@)(@@) % و لو نظرت عيني لغير جماله % % لكان اذا انسانها غير انسان % % PageV01P1969 11(@)(@@) % شغلت بذكراه ومدح محمد % % فيا لك من حسن لدي وإحسان % % 12(@)(@@) % لعمري لقد حل الكمال بغاية % % من الفضل ترمي الفاضلين بنقصان % % 13(@)(@@) % إمام أقامته الفضائل واحدا % فلم يختلف في فضله الباهر اثنان % % 14(@)(@@) % تأخر عن عصر الكرام وفاقهم % % فكان وكانوا مثل بسم وعنوان % % 15(@)(@@) % و جهز جيش العسرمن طالبي الندى % % فلابن علي في الورى وصف عثمان % % 16(@)(@@) % إلى جبل 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms385# من حلمه يقرع الثنا % % اذا غاص من جدواه في فيض طوفان % % 17(@)(@@) % فتى العلم والنعماء يرجى ويقتدي % % وفي بابه للجود والعلم بحران % % 18(@)(@@) % فوائده للوفد مثل سحابة % وأنعمه كالتابعين بإحسان % % 19(@)(@@) % و في كفه الغصن الذي كلما جرى % % على صفحات الطرس جاء ببستان % % 20(@)(@@) % يراع له كل معضلة سطا % تعلمها في الغب من أسد خفان % % PageV01P1970 21(@)(@@) % و أروع أخبى للائمة منصبا % يرق ويزهي حين يبكي الجديدان % % 22(@)(@@) % فللشافعي السائر الذكر بهجة % % فتى حنبل فيها ومالك سيان % % 23(@)(@@) % و قد أشرقت خدا ابن ثابت فرحة % % فهن بلا شك شقائق النعمان % % 24(@)(@@) % سحبت ذيول الفضل واللفظ للورى % % فكنت على الحالين أشرف سحبان % % 25(@)(@@) % و أتعبت نفسا للمعالي كريمة % % وليس العلى والمجد إلا لتعبان % % 26(@)(@@) % اليك رعاك الله مدحة واصل % % يحاشيك أن تلقى المديح بهجران % % 27(@)(@@) % منظمة من كل بيت كأنه % % لأفراط ما ضم الولا بيت سلمان % % 28(@)(@@) % حلا بك في شعبان مر حديثها % % وقال الورى هذي حلاوة شعبان % % PageV01P1971 البحر : - 1(@)(@@) % يا بروقا على ربى يبرين % % أي بيض أغمدت بين جفوني % % 2(@)(@@) % نحرت نصلك الكرى فلهذا % % سال من مقلتي دم من شجوني % % 3(@)(@@) % وحكت رونثق الثغور إلى أن % % ضحكت بالبكا ثغور العيون % % 4(@)(@@) % آه للثغر والفم العذب أمسى % % منهما العقل بين ميم وسين % % 5(@)(@@) % وغرير مازلت ألقى الهوى في % % ه بدمع واف وصبر خؤون % % 6(@)(@@) % ما عذولي في حبه برشيد % % لا ولا رأي ناصحي بأمين % % 7(@)(@@) % و ديار من الأحبة أقوت % % فصداها لبعدهم كالأنين % % 8(@)(@@) % درست فهي لا تبين الا % بالأسى تستفز قلب الحزين % % 9(@)(@@) % أو أرى في أراكها ضوء ثغر % % كلما ضل رسمها يهديني % % 10(@)(@@) % معهد طالما نعمت وعيشي % % مستماح اليدين غير ضنين % % PageV01P1972 11(@)(@@) % بغصون من أرضه كقدود % وقدود من أهله كغصون % % 12(@)(@@) % و جنان الخلود يفتح منها الل % % ثم صدغا يظل كالزرفين % % 13(@)(@@) % كنت فيها أثرى الأنام من الصب % % وة واللهو والصبا والجفون % % 14(@)(@@) % بين راح من الأباريق مك % % يول ولفظ من الغنا موزون % % 15(@)(@@) % ذاك عيش مضى عزيزا فلا غر % % و لعين تبكي بماء معين % % 16(@)(@@) % و وجوه مثل الدنانير قد عا % % جلها دهرها بصرف المنون % % 17(@)(@@) % قد رماني بضر أيوب منها % % كل خد بصدغه ذي النون % % 18(@)(@@) % ثم زال 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms386# الصبا ومن كان يصبي % % وشجوني كلما علمت شجوني % % 19(@)(@@) % لست أسلو تلك المحاسن حتى % % يتسلى الندى جلال الدين % % 20(@)(@@) % ملتقى القصد مرتقى المدح مهوى ال % % رفد غيث الولي غيظ القرين % % PageV01P1973 21(@)(@@) % بحر فقه وان تشأ فابن بحر % % في ضروب البيان والتبين % % 22(@)(@@) % وخطيب يكفي الخطوب بلفظ % % يستميل الصخور بالتليين % % 23(@)(@@) % ساجع يورق المنابر ميسا % فتلذ الأسجاع فوق الغصون % % 24(@)(@@) % وإمام المحراب يشهد علم % حازه أنه إمام الفنون % % 25(@)(@@) % وسري ضاهى الهلال ارتفاعا % وضياء بعزمه المستبين % % 26(@)(@@) % ساور الفرقدين عنه إلى أن % % أسلماه وتله للجبيبن % % 27(@)(@@) % ضاع مدح يهدي لغير علاه % % ضيعة البكر في يد العنين % % 28(@)(@@) % فعلت راحتاه في كل عسر % مثل فعل المضاف في التنوين % % 29(@)(@@) % كل يوم فتوة وفتاو % منقذات الجهول والمسكين % % 30(@)(@@) % قسما بالضحى لديه من البش % % ر وبالليل من يراع أمين % % PageV01P1974 31(@)(@@) % إن نظم المديح فرض علينا % % كل يوم لعزمه المسنون % % 32(@)(@@) % شبه الناس جوده بالغوادي % % كاشتباه الهلال بالعرجون % % 33(@)(@@) % هكذا يفخر المحاول فخرا % ليس حسن الوجوه كالتحسين % % 34(@)(@@) % شرف في تواضع واحتمال % % في اقتدار وهيبة في سكون % % 35(@)(@@) % لجأ الفضل من علاه لطود % مشمخر سامي المنال ركين % % 36(@)(@@) % ويراع قد كان مرباه قدما % في عرين يسقى بغيث هتون % % 37(@)(@@) % فلهذا في الجود حاكى حبا الغي % % ث وحاكى في البأس أسد العرين % % 38(@)(@@) % فيه سحر يبين عنا شكوكا % أي سحر كما رأيت مبين % % 39(@)(@@) % ووقى كل آمر جلب القص % % د لمغناه غير ما مغبون % % 40(@)(@@) % من أناس سادوا وشادوا معالي % % هم بشد عند الفعال ولين % % PageV01P1975 41(@)(@@) % مثل بيض من الظبا رونقا في % % صفحات وحده في متون % % 42(@)(@@) % ملكوا راية البيان وحلوا % % عنق الدهر بالكلام الثمين % % 43(@)(@@) % أيها العالم الذي حصن الد % ين بأوراق كتبه في حصون % % 44(@)(@@) % أمر الله أن تسود ويزهى % % حينك المجتلى على كل حين % % 45(@)(@@) % فابق سامي المحل هامي العطايا واجتل البكر من ثنائي لا تحتاج من واصف إلى تزيين أنت أولى يا بحر علم وبر كل وقت بمثل هذي النون سلكت راحتاك ما استصعب النا س من الجود والعلى في الحزون أصل كل الأنام ماء ولكن أنت من رائق وهم من أجون % % سابق المجد دائم التمكينسقط ابيات ص % % PageV01P1976 البحر 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms387# : - 1(@)(@@) % مقسم الخاطر ولهانه % % مخبر عن شانه شانه % % 2(@)(@@) % تكلمت مهجته بالأسى % % وعبرت بالحال أجفانه % % 3(@)(@@) % بالروح أفدي أغيدا قد بدا % % يخط فوق الخد ريحانه % % 4(@)(@@) % عاد على نوم الورى ناهب % وهو ثقيل الجفن وسنانه % % 5(@)(@@) % يحمي شقيق الروض في خده % % وبالقنا يحجب نعمانه % % 6(@)(@@) % واها له خدا حكى جنة % % وخاله الأسود جناته % % 7(@)(@@) % أضحى معاذا من سلوي فما % % يزال يضني القلب فتاته % % 8(@)(@@) % يا واعدا من بعده بالردى % % يكفي من الواعد هجرانه % % 9(@)(@@) % تجنى بساتين البرايا وقد % % جتى على رآئيك بستانه % % 10(@)(@@) % و عاذل مقلته لا ترى % % والصب لا تسمع آذانه % % PageV01P1977 11(@)(@@) % يجهل جهل الثور في عذله % % فخله يطلق فدانه % % 12(@)(@@) % ما أكتم القلب لتبريحه % % وقد توارت منه نيرانه % % 13(@)(@@) % قلمبت يا قلبي زندا فما % % يضره للنار كتمانه % % 14(@)(@@) % ان كان حزني من رضاها جرى % % فمن سرور القلب أحزانه % % 15(@)(@@) % و جيرة في القلب أسكنتهم % % فارتحل البيت وسكانه % % 16(@)(@@) % و أصبح المغرم قد فاته % % مكانه منهم وإمكانه % % 17(@)(@@) % اذا دعا خادم شجو إلى % % دمع جرى في الحال مرجانه % % 18(@)(@@) % فقلبه في مصر مستودع % وفي أقاصي الشام جثمانه % % 19(@)(@@) % أغصه النيل بدمع الأسى % % ومررت ذكراه حلوانه % % 20(@)(@@) % و شيبت أيدي النوى شعره % % وشاقه الدير وشعرانه % % PageV01P1978 21(@)(@@) % حيث الصبا تركض أفراسه % % وتقنص الآرام فرسانه % % 22(@)(@@) % من كل ريم قد تشوقته % % من قبل أن تشتاق أوطانه % % 23(@)(@@) % أبداه بالذكر فأعجب لمن % % يبدأ بالساكن بنيانه % % 24(@)(@@) % لمنطق من ذكره حسنه % % ومن علاء الدين إحسانه % % 25(@)(@@) % أنا أمير الشعر في وصف ذا % % ومدح ذا رتب ديوانه % % 26(@)(@@) % فازت يدا من بعلي الندى % % تعلق يمناه وأيمانه % % 27(@)(@@) % ذو السر والبر فيا حبذا % % أسراره الطهر وإعلانه % % 28(@)(@@) % و المرتقي علياء يعشو إلى % % كتابه في الأوج كيوانه % % 29(@)(@@) % و رتبة في الافق قد رجحت % % من قبل أن يرصد ميزانه % % 30(@)(@@) % للدين والدنيا عليه سنا % يعرب عن فحواه عنوانه % % PageV01P1979 31(@)(@@) % فحبذا لمادحيه الندى % % وأنعم الله ورضوانه % % 32(@)(@@) % الشعر فيه ملك قابل % % وقابل في الغير شيطانه % % 33(@)(@@) % لوعده من كرم ذكره % % حتى اذا وفى فنسيانه % % 34(@)(@@) % كأنما البحر له راحة % % وهذه الأنهر خلجانه % % 35(@)(@@) % كأنما ألفاظه روضة % وهذه الأطراس غدرانه % % 36(@)(@@) % زهت رياض الملك من حين ما % % هزت من الأقلام أغصانه % % 37(@)(@@) % و طوق الخلق بإنعامه 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms388# % % فرجعت بالحمد ألحانه % % 38(@)(@@) % لطائف البيت الذي لم يزل % % لطائف الآمال أركانه % % 39(@)(@@) % كل امرئ سلمانه بالولا % % وكل مهدي المدح حسانه % % 40(@)(@@) % من معشر هم في الندى سحبه % % وفي ظلام الخطب شهبانه % % PageV01P1980 41(@)(@@) % إلى فتى الخطاب ساميهم % % تفنن الفضل وأفنانه % % 42(@)(@@) % من عمر نور التقى والعلى % % إلى علي آل برهانه % % 43(@)(@@) % فأنت ذو النورين من ذا وذا % % عليه أم أنت عثمانه % % 44(@)(@@) % يا شائد البيت النظيم الذي % % على التقى أسس بنيانه % % 45(@)(@@) % يا صاحب اللفظ فريدا به % % فهو على الحالين سحبانه % % 46(@)(@@) % يا راشق الرأي السديد الذي % % أنفذه بالسعد سلطانه % % 47(@)(@@) % ياذا اليراع المجتلي بارقا % وفي فجاج الأرض هتانه % % 48(@)(@@) % مجانس يحيى العلى والردى % % خطابه الحلو وخطبانه % % 49(@)(@@) % في يدك البيضاء يوم الوغى % % يلتقم الأهوال ثعبانه % % 50(@)(@@) % و في الندى يا نوح عمر العلى % % يلتهم الأموال طوفانه % % PageV01P1981 51(@)(@@) % كالذابل الخطي لكنه % % في البر أو في الخصب ريانه % % 52(@)(@@) % ما لبس من لاقاه يوم الوغى % % دروعه بل هي أكفانه % % 53(@)(@@) % لو لم ينبه جفنه كالئا % ما غمضت للسيف أجفانه % % 54(@)(@@) % لو لم يحرر قوله مفصحا % ما صممت في الروع خرسانه % % 55(@)(@@) % لو لم يصغ جوهر إدراجه % % ما أزهرت بالمدح تيجانه % % 56(@)(@@) % يا صاحب الهيبة ألية % % حيث الرجا تفهق غدرانه % % 57(@)(@@) % يا صاحب الرأفة والعطف لا % % نسيم نعمان ولا بانه % % 58(@)(@@) % يا سيدي دعوة ذي حالة % % أحالها الدهر وعدوانه % % 59(@)(@@) % تفليسه في الشام بعد الغنى % % يقضي بأن القلب حرانه % % 60(@)(@@) % فارق أولادا وأهلا وما % % تحملت للبين أظعانه % % PageV01P1982 61(@)(@@) % ذو الفقر في أوطانه نأيه % % وذو الغنى في النأي أوطانه % % 62(@)(@@) % ضاق به إلا اليك الفضا % % وحثه حاشاك حرمانه % % 63(@)(@@) % فالدهر لون واحد عنده % % طرا وعند الناس ألوانه % % 64(@)(@@) % سقياك يا من في يدي فضله % % سيحان داعيه وجيحانه % % 65(@)(@@) % و دونك الأجر الذي قبله % % سريع هذا الفضل عجلانه % % 66(@)(@@) % هذا وذا البحر أتى دره % % وجاء للمعدن عقبانه % % PageV01P1983 البحر : - 1(@)(@@) % سرى والدجى كالصدر بالهم ملآن % % خيال بقلبي منه كالشهب أشجان % % 2(@)(@@) % فنفر عن طرفي الكرى وأعاد لي % % رسيس غرام وانقضى وهو غضبان % % 3(@)(@@) % على حين لم ينضب من النجم قطرة % % ولا فاض في الظلماء للفجر طوفان % % 4(@)(@@) % ولا شفق الإصباح ماء وقهوة % % ولا الطير في دوح على العود 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms389# مرنان % % 5(@)(@@) % يخيل لي طيف المليحة حسنها % % لو أن الكرى فيه على الحسن إحسان % % 6(@)(@@) % بروحي من شطت فحجبت النوى % % شقائق خديها وأقفر نعمان % % 7(@)(@@) % كأن لم يكن نعمان للغيد منبتا % فيا حبذا قضب لديه وكثبان % % 8(@)(@@) % ويا حبذا قضب من البان حملها % % لذي الثغر تفاح وذي الضم رمان % % 9(@)(@@) % وكم قيل في البستان غصن وهذه % % معاطفها تجلى وفي الغصن بستان % % 10(@)(@@) % وغيداء أما ردفها فهو مشبع % % روي وأما خصرها فهو عريان % % PageV01P1984 11(@)(@@) % وما كنت أدري قبل فتك جفونها % % بأن السيوف المشرفية أجفان % % 12(@)(@@) % و من عجب محض الأعاريب جاده % % تجوع على غلاته وهو شبعان % % 13(@)(@@) % و أعجب من ذا أن في فمها الطلا % % وإني إلى تلك المليحة نشوان % % 14(@)(@@) % لي الله قلبا لا يزال تهيجه % % إلى الحب أوطار قدمن وأوطان % % 15(@)(@@) % أجيراننا بالشعب سقيا لعهدكم % % وان كان عهدا حظنا منه أشجان % % 16(@)(@@) % و لا زال عقد المزن درا بداركم % % يفصله من قادح الشوق مرجان % % 17(@)(@@) % تذكرني الأشواق فيكم غزالة % % تفر حيا منها إلى البيد غزلان % % 18(@)(@@) % فتاة رأى اللاحي عليها مدامعي % % فقال رياض قلت إن وغدران % % 19(@)(@@) % فبعت لها روحي أتم تبايع % فيا حبذا لم ذا تفرق أبدان % 20(@)(@@) % ولم أنس مسرى شمسها وهي طلعة % % يحف بها شهب الوغى وهو خرصان % % PageV01P1985 21(@)(@@) % إذا هب تلقاء الهوادج سحرة % هواء حثا في وجهه الترب غبران % % 22(@)(@@) % يذب كما ذب ابن يحيى عن العلى % % فلا الانس دان من حماها ولا الجان % % 23(@)(@@) % أعم الورى جودا وأبرع منطقا % فقل في سحاب الجود تزجيه سحبان % % 24(@)(@@) % ففي صدره الدهناء حلما إذا اجتنى % % وكفاه سيحان علينا وجيجان % % 25(@)(@@) % يجود وقد أرسى الوقار بعطفه % % كما دفع السيل العرمرم ثهلان % % 26(@)(@@) % و يقضي على أمواله فيمينه % % وأكسياسه للمال نعش وأكفان % % 27(@)(@@) % ندى متبع بالمال جاها كما همى % % على منبع السلسال أو طف هتان % % 28(@)(@@) % إذا جاد بالوجناء كالبيت حاتم % % فمن جود مولانا قلاع وبلدان % % 29(@)(@@) % و من جود مولانا ناعلا ومناصب % وعلم لنظام الثناء وتبيان % % 30(@)(@@) % ولا عيب في نعمائه غير أنها % % لأعناق أحرار البرية أثمان % % PageV01P1986 31(@)(@@) % و لا عيب أيضا في بديع كلامه % % سوى أنه بالحسن للناس فتان % % 32(@)(@@) % خطاب كذوب الشهد في فم 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms390# ذائق % ولكنه في مهجة الضد خطبان % 33(@)(@@) % رقيق فما الصهبا لديه ذكية % % وجزل فما الرمح المدرب ملسان % % 34(@)(@@) % مضى وبدا عبد الرحيم وأحمد % % فلله آثار كرمن وأعيان % % 35(@)(@@) % و لله من لفظ ابن يحيى وفضله % % علينا مدا الأيام روح وريحان % % 36(@)(@@) % وزير له الحسنى صفات وكاتب % عليه لأوضاع السيادة عنوان % % 37(@)(@@) % محيط الندى بالعالمين كأنما % % له الأرض دار والبرية ضيفان % % 38(@)(@@) % و كافل أمر الملك حتى كأنما % % هو الروح والملك المحرك جثمان % % 39(@)(@@) % و بالغها في مرتقى المجد رتبة % تلظى ولم يظفر بها قبل كيوان % % 40(@)(@@) % له قلم يجدي ويردى به العدى % % فلله طعام اليراعة طعان % PageV01P1987 41(@)(@@) % تعلم سطو الأسد في كرم الحيا % % زمان سقته السحب والدار حفان % % 42(@)(@@) % إذا قال صاغ الدر لفظا وأنعما % كما شهدت أجياد قوم وأذهان % % 43(@)(@@) % فأسطره نحو الدراري سلالم % والا فنحو الدر في البحر أشطان % % 44(@)(@@) % و يارب جيش نقعه ونضاله % دخان تراعيه الوحوش ونيران % % 45(@)(@@) % تظل به العقبان آلفة القنا % % كأنهما ورق الحمائم والبان % % 46(@)(@@) % كأن الثرى خد من الدم مشرق % % إذا ما التقى الصفان والخيل خيلان % % 47(@)(@@) % تلقف ذاك النضو جمع سلاحه % % كما في اليد البيضاء للقف ثعبان % % 48(@)(@@) % يصرفه البحر الذي البحر كفه % % وأنمله أنهار رزق وخلجان % % 49(@)(@@) % من القوم حلوا محل آفاق دولة % % فهم في سماء العز والرأي شهبان % % 50(@)(@@) % ألم ترهم كالشهب لما علموا حموا % % ولما حموا ضاؤوا ولما أضوا رانوا % % PageV01P1988 51(@)(@@) % لعدلهم صلح الضراغم والظبا % % وبين الندى والوفر عبس وذبيان % % 52(@)(@@) % يرجح ما بين الكواكب فضلهم % % ومن أجل هذا للكواكب ميزان % % 53(@)(@@) % جمعتم بني الفاروق ما افترق العلى % % ونظمتمو أحوالها وهي شدان % % 54(@)(@@) % لعمري لقد طبتم وطابت محاتد % وطابت لكم يا زبدة الفضل ألبان % % 55(@)(@@) % و حسبك يا فرع السيادة والعلى % % فنون أضاءت في الفخاروأفنان % % 56(@)(@@) % تجمع في أوصافك اللطف والسطا % % كأنك في أثنائنا حر نيسان % % 57(@)(@@) % و سر وقد أحيت محياك آخذا % كتاب العلى بل سر جدك عدنان % % 58(@)(@@) % رأتك نظير العين في الناس دولة % % على رأسها من صوغ لفظك تيجان % % 59(@)(@@) % لقد شاء رب تفضيل قدرهم % % كأنك فيهم يا أخا العين إنسان % % 60(@)(@@) % و إنك يا عين الملوك شهابهم % % إذا زاغ في أفق المهالك 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms391# شيطان % % PageV01P1989 61(@)(@@) % و إنك للبحر الذي كله وفا % وكل حصى شطيه في النقد عقيان % % 62(@)(@@) % بدأت بخير طال دون تمامه % % لحظي وللأيام عدو وعدوان % % 63(@)(@@) % و دافعني الديوان عن متوفر % ولي فيك يا أوفى الخليقة ديوان % % 64(@)(@@) % فقم في ذرى العليا قيام عناية % % سيمضي بها أزمان ذكر وأزمان % % 65(@)(@@) % و دونك مني كل مشرقة الثنا % % لها الأفق مغنى والأهلة جيران % % 66(@)(@@) % منظمة من كل بيت بودكم % % ففي كل بيت للموالاة سلمان % % 67(@)(@@) % ولا عيب فيها غير راحة نظمها % % وحاسدها ذاك المنكل تعبان % % 68(@)(@@) % يحاول نظما مع مثاقيل نظمه % % كأن يراعا في الأنامل قبان % % PageV01P1990 البحر : - 1(@)(@@) % أرأيت نهج الحق كيف يبين % % ومطالع الوزراء كيف يكون % % 2(@)(@@) % والدر كيف يغيب في أدراجه % % ويعاود التقليد وهو ثمين % % 3(@)(@@) % والعضب يعرف قدره وعناءه % % إن سل أو غمضت عليه جفون % % 4(@)(@@) % لله أي بشارة سيارة % قرت عيون عندها وظنون % % 5(@)(@@) % دعت الوزارة أن يعود لشملها % % كفء فقال لها الزمان أمين % % 6(@)(@@) % ما زال داج أفقها حتى بدا % % من حضرة القدس السنا المكنون % % 7(@)(@@) % وسرى الوزير إلى البلاد كما سرى % % للجدب منبجس الغمام هتون % % 8(@)(@@) % وتلقفت إفك الغواة يراعة % ألقت عصاها في الأمور يمين % % 9(@)(@@) % محمرة فكأنها مخضوبة % % مما تقد من العدى وتبين % % 10(@)(@@) % حلفت فبرت أن ستكشف ما دجى % % ولنعم مخضوب البنان يمين % % PageV01P1991 11(@)(@@) % أعظم بهاتيك اليراعة إنها % % حصن لأقطار البلاد حصين % % 12(@)(@@) % تفدي لقاصدها وتحفظ سرح ما % % وليت فتبذل ما تشا وتصون % % 13(@)(@@) % كم أطربت سمعا لرافع قصة % فكأن رجع صريرها تلحين % % 14(@)(@@) % ولكم جنت حربا لطالب فتنة % % فكأن صف سطورها صفين % % 15(@)(@@) % نشأت بغيل الأسد يرضعها الحيا % % فلذاك تقسو تارة وتلين % % 16(@)(@@) % يا حبذا باب الوزير وحبذا % % بالقاصدين جنابه المشحون % % 17(@)(@@) % يلقاك من نور المهابة حاجب % لكنه بنواله مقرون % % 18(@)(@@) % وأغر لا يشكو النزيل ببابه % % ضررا ولا يتظلم المسكين % % 19(@)(@@) % فرضت مواهبه وأرهف عزمه % % فتوافق المفروض والمسنون % % 20(@)(@@) % ذو راحة من برها وعقابها % % من كل شارقة مني ومنون % % PageV01P1992 21(@)(@@) % تجري بما نفع الورى أقلامها % % فكأنها بحر وهن سفين % % 22(@)(@@) % وتنال ما أعيى الرجال كأنها % % جد وأبناء الزمان مجون % % 23(@)(@@) % أمعيد سرح الملك يزهى شأنه % % من بعد ما مرت عليه سنون % % 24(@)(@@) % ألله جارك ما أبر 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms392# شمائلا % تعنو الخطوب لامرها فتهون % % 25(@)(@@) % جن الذي يبغي مقامك في العلى % % ويروم شأوك والجنون فنون % % 26(@)(@@) % وفعائلا تمضي إرادتها إذا % % ما صاحب الأفعال قد والسين % % 27(@)(@@) % لازال بابك ظله وفق الرجا % % ونزيله التأييد والتمكين % % 28(@)(@@) % وفرت مواهبه ورق مديحه % % فتشابه المكيول والموزون % % PageV01P1993 البحر : - 1(@)(@@) % أعدي بغيركم دمع المحبينا % % حتى تلون يوم البين تلوينا % % 2(@)(@@) % يا هاجرين بلا ذنب سوى شجن % بين الجوانح لا ينفك يشجينا % % 3(@)(@@) % لا تسألوا ما جرى من فيض أدمعنا % % فيكم وما قد جرى من غدركم فينا % % 4(@)(@@) % أما الرجاء فما راعيتموه لقد % % غرت بدوركم آمال سارينا % % 5(@)(@@) % كيف السبيل إلى إنصاف قصتنا % % إذ خصمنا في سبيل الحكم قاضينا % % 6(@)(@@) % يجني علينا ويجني للأسى ثمرا % شتان ما بين جانيكم وجانينا % % 7(@)(@@) % كونوا كما شئتموا نأيا ومقتربا % إن لم تكونوا من الدنيا كما شينا % % 8(@)(@@) % إنا وإن غدرت فينا عهودكم % من الذين هم للعهد راعونا % % 9(@)(@@) % في قبلة العشق أو ميدان حليته % % نحن المصلون أو نحن المجلونا % % 10(@)(@@) % لا يقبس الوجد إلا من جوانحنا % % ويستقي الدمع إلا من مآقينا % % PageV01P1994 11(@)(@@) % حمر مدامعنا صفر مناظرنا % % سود مذاهبنا بيض نواصينا % % 12(@)(@@) % لو كان في الألف منا واحد فدعوا % % من عاشق ظنهم إياه يعنونا % % 13(@)(@@) % مذ اشتغلنا بتكرار الغرام بكم % % لم ينس خوف دروس العهد ماضينا % % 14(@)(@@) % لكنكم وجلال الله يكلؤكم % % تسترفضون جميلا من توالينا % % 15(@)(@@) % وتصرفون لأقوام عنايتكم % % عنا وما قصرت عنكم مساعينا % % 16(@)(@@) % هي الحظوظ فعش منها بما وهبت % % ولا تقل عاليا عزمي ولا دونا % % 17(@)(@@) % يعني بذا دون هذا مع تماثله % % وقس على ما تراه السين والشينا % % 18(@)(@@) % همنا فإن يسل عن أسداء أنعمه % % كف الفلان فإن الدهر يسلينا % % 19(@)(@@) % لله در فلان الدين من رجل % يسر دنيا ويرضى بالتقى دينا % % 20(@)(@@) % فتى يضاعف أثمان الرجاء لمن % % سعى له ويراه بعد مغبونا % % PageV01P1995 21(@)(@@) % جذلان تحذف جمع المال راحته % % حذف الاضافة في الأسماء تنوينا % % 22(@)(@@) % نستمنح المال مكيولا بأنعمه % % وننظم القول في علياه موزونا % % 23(@)(@@) % ويصبح المدح إلا في مناقبه % % كالبكر زوجها الأهلون عنينا % % 24(@)(@@) % نعم الملاذ بجاه أو نوال يد % في حادث الدهر يحمينا ويروينا % % 25(@)(@@) % كادت عطاياه أن تبقى معطلة % % لأن نائلها لم يبق مسكنا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms393# % % 26(@)(@@) % وكاد من لطف ألفاظ محررة % يرد سائله المفتن مفتونا % % 27(@)(@@) % يا جائل الطرف فسي السادات قف بحمى % % من ليس يحتاج تعريفا وتبيينا % % 28(@)(@@) % لسنا نسميه إجلالا وتكرمة % وقدره المعتلي عن ذاك يغنينا % % 29(@)(@@) % شمه تجد حاجبا من نور طلعته % % لكنه لم يزل بالنجح مقرونا % % 30(@)(@@) % وآمرا بنوال القاصدين فما % % يزال فيهم رشيد الرأي مأمونا % % PageV01P1996 31(@)(@@) % تريك أقلامه في بحر راحته % % فلكا بما يمنع الآمال مشحونا % % 32(@)(@@) % كأنها وهي بالألفاظ مطربة % قضب تجيد عليها الورق تلحينا % % 33(@)(@@) % في كف أبلج يلقى الجود مفترضا % لدى علاه وحد العزم مسنونا % % 34(@)(@@) % له نجوم من الآراء نعرفها % % بصحة السعد لا حدسا وتخمينا % % 35(@)(@@) % وفكرة ذات ألفاظ منورة % % يكاد سامعها يجني البساتينا % % 36(@)(@@) % من مبلغ العرب عن شعري ودولته % % أن ابن عباد باق وابن زيدونا % % 37(@)(@@) % حبرتها فيه زهراء المعاطف من % % أعلى وأنفس ما يهدي المجيدونا % % 38(@)(@@) % اذا رأيت قوافيها وطلعته % % فقد رأت مقلتاك البحر والنونا % % 39(@)(@@) % كأن ألفاظها في سمع حسدها % % كواكب الرجم يحرقن الشياطينا % % 40(@)(@@) % يا ماجدا فاز بادينا وحاضرنا % % به وأنجح قاصينا ودانينا % % PageV01P1997 41(@)(@@) % إن كان يزداد شيء بعد غايته % % فزادك الله في العلياء تمكينا % % PageV01P1998 البحر : - 1(@)(@@) % تحملوا من رياض الحسن أفنانا % % فأرسلت أدمع العشاق غدرانا % % 2(@)(@@) % وهيجوا يوم سلع من بلابلنا % % لما أمالوا من الأعطاف أغصانا % % 3(@)(@@) % عرب جلوا بظباهم من خدودهم % % شقائقا ومن الأبدان نعمانا % % 4(@)(@@) % حلو الفلا وعطت أجيادهم ورنوا % % حتى أقاموا مع الغزلان غزلانا % % 5(@)(@@) % واستوطنوا عقدات الرمل واحتملوا % % بين المآزر من يبرين كثبانا % % 6(@)(@@) % ما كنت قبل تلافي من جفونهم % أظن أن من الأسياف أجفانا % % 7(@)(@@) % و لا تخيلت معنى السحر عندهم % % حتى تقلب حبل الشعر ثعبانا % % 8(@)(@@) % قالوا حكى الليل ما ضمته خمرهم % حتى نضوا فاذا بالفرق قد بانا % % 9(@)(@@) % من أين لليل أصداغ معقربة % % تردي النفوس وتحييهن أحيانا % % 10(@)(@@) % و أين للبدر ألحاظ مفترة % % يضرمن في مهجات الناس نيرانا % % PageV01P1999 11(@)(@@) % كنا وكان لنا عيش وأعقبنا % % شجو فياليت لا كنا ولا كانا % % 12(@)(@@) % ياساكني السفح لا ألجى تلونكم % % فهذه أدمعي قد حلن ألوانا % % 13(@)(@@) % استنغفر الله لم يذهب وفا وندى % % و في الأنام كمال الدين مولانا % % 14(@)(@@) % المالئ العين بشرا والا كف لهى % % و القلب 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms394# أبهة والسمع تبيانا % % 15(@)(@@) % و المانح المال مكيالا لكثرته % % و المستمد من الأمداح أوزانا % % 16(@)(@@) % فاق الكرام على تقديم عصرهم % فكان بسملة والقوم عنوانا % % 17(@)(@@) % وزاد فضلا على فضل الجدود مضوا % % فكان فاتحة والقوم قرآنا % % 18(@)(@@) % اذا تمثل أهل المجد همته % % خروا لعزتها صما وعميانا % % 19(@)(@@) % أكرم بها همم شبت عزائمها % % فخل ما نقلوا عن معن شيبانا % % 20(@)(@@) % صان الحمى بجيوش من مهارقه % % لما أقل من الأقلام خرصانا % % PageV01P2000 21(@)(@@) % وزاد في رتب العلياء منزلة % تلقى اذا عطشت للسحب أشطانا % % 22(@)(@@) % ذاك الذي زاد من تبيان أوله % % أذا تخيفت الأبناء بنيانا % % 23(@)(@@) % كأن راحته الحسنى وأنمله % % بحر يمد إلى العافين خلجانا % % 24(@)(@@) % يا من ركبت نجوم السعد أقصده % % وما ركبت اليه الناس بعرانا % % 25(@)(@@) % شكرا لنعماك إن وفى حديث ثرى % % شكرالرياض سفوح الودق هتانا % % 26(@)(@@) % إني سألت ندى كفيك ري صدا % وما سألت ندى كفيك طوفانا % % 27(@)(@@) % فاحبس هباتك عني أنني رجل % % أخاف بغيا على نفسي وعدوانا % % 28(@)(@@) % واغلق لهاك وان زفت حدائقها % % فحسبي الود جنات ورضوانا % % 29(@)(@@) % أمرت شعري على الأشعار قاطبة % حتى اتخذت لشعري فيك ديوانا % % 30(@)(@@) % وعز قولي ولم أقصد بوافده % % إلا العزيز ولم أبذله مجانا % % PageV01P2001 31(@)(@@) % وقد تكثر حسادي وأورثهم % % نفاق لفظي في ناديك أحزانا % % 32(@)(@@) % فارحم عداتي فاني قد رحمتهم % مما أرى منهم في الشام حرانا % % 33(@)(@@) % تشكو العناء وما تعنو له فكري % % فلا لحى الله إلا قلب أشقانا % % 34(@)(@@) % ودم مدى الدهر تخزي شانئا ركدت % % به الهموم وتعلو في الورى شانا % % 35(@)(@@) % ما خفت من ذنب أقارفه % % فإن في مدحك المقبول غفرانا % % PageV01P2002 البحر : - 1(@)(@@) % أخا اللوم لا تتعب لسانا ولا ذهنا % ملامك لا لفظ لديه ولا معنى % % 2(@)(@@) % بروحي وضاح المحاسن أغيد % % رشيق أغار البدر والظبي والغصنا % % 3(@)(@@) % من الترك في خديه للحسن روضة % % ولكنها تجني علينا ولا تجني % % 4(@)(@@) % وللحظ منه سنة عربية % % ألم تره في الحرب قد كسر الجفنا % % 5(@)(@@) % اذا قام يروي حاجباه وطرفه % % ترى السحر منه قاب قوسين أو أدنى % % 6(@)(@@) % تحجبه عنا الأسنة والظبا % % وأفتك منها لحظ من حجبت عنا % % 7(@)(@@) % وتمنع رمحا بينها من قوامه % % ولكنه لا جرح فيها ولا طعنا % % 8(@)(@@) % فتى الحسن هلا أنت للصب عاطف 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms395# % % فتجمع ما بين المحاسن والحسنى % % 9(@)(@@) % غلا الجواهرالأعلى بثغرك فلتفض % % مدامع لاتكون على العرض الأدنى % % 10(@)(@@) % حكى الخلق من قاضي القضاة بخلقه % % فهذا حوى حسنا وهذا حوى حسنى % % PageV01P2003 11(@)(@@) % كريم لنا فسي فعله ومقاله % % سحاب الغنى المنهل والروضة الغنا % % 12(@)(@@) % يقاسمنا في كل يوم جميله % % فنثر العطا منه ونثر الثنا منا % % 13(@)(@@) % أخو صدقات يحبس المن جودها % % على أنها في الجود لا تحسن المنا % % 14(@)(@@) % رأى الفكر إعراب الثنا فيه كلما % % بناه إلى أن صار في معرب يبنى % % 15(@)(@@) % وأقسم أن لاشيء كالغيث في الندى % % فلما رأى جدوى أنامله استثنى % % 16(@)(@@) % وما فيه عيب سوى أن عنده % % أياد تعيد الحر في يده قنا % % 17(@)(@@) % دعاني على بعد المنازل جوده % % وجدد لي نعمي وأنجح لي ظنا % % 18(@)(@@) % ومجد يرد السائدين به سدى % % وعلم يرد المفصحين به لكنا % % 19(@)(@@) % ليالي ودعت المؤيد والثنا % % وفارقت أوقات الغنى منه والمغنا % % 20(@)(@@) % وزايل نظم الجوهر الفضل منطقي % % وأعوزني من قوتي العرض الأدنى % % PageV01P2004 21(@)(@@) % أيا جائدا بالتير في حال عسرة % % لنا لم نكد من فرطها نجد التبنا % % 22(@)(@@) % فعلت فلو وفي تطولك الثنا % % لقلت أفانين الثنا وطولنا % % 23(@)(@@) % و أفحمتنا في البر حتى كأننا % % لدى البر ما رمنا المقال فأفصحنا % % 24(@)(@@) % اذا نحن قابلنا صلاتك بالثنا % % تكدس من هنا علينا ومن هنا % % 25(@)(@@) % و حقك ما ندري أإجراء ذكرنا % % بفكرك أن هذا العطاء لنا أهنا % % 26(@)(@@) % هو الرفد يتلو الود طاب كلاهما % % كما حملت للمحل روح الصبا المزنا % % 27(@)(@@) % كذا أبدا تزهى العلى بجلالها % % فلله ما أسرى فخارا وما أسنا % % 28(@)(@@) % فياليت شعري كيف القى بواحد % من الشكر مثنى من أيادي الندى مثنى % % 29(@)(@@) % على ذكرك العالي بنا كل معرب % ثناه فيا لله من معرب يبني % % PageV01P2005 البحر : - 1(@)(@@) % وهارب من رضوان % % أوقعني في النيران % % 2(@)(@@) % والحسن شيء فتان % % وللشجون أفنان % % 3(@)(@@) % جل صنع الرحمن % % خالق قد الأغصان % % 4(@)(@@) % يحمل السوسبان % % الجيد فيه السوسان % % 5(@)(@@) % والصدر فيه الرمان % % عيناي منه عينان % % 6(@)(@@) % والليل عندي ليلان % % يا ويح قلبي الهيمان % % 7(@)(@@) % تصيدته الغزلان % % بين اللوى فعسفان % % 8(@)(@@) % و كلمته الأجفان % % بمثل ما في الأجفان % % 9(@)(@@) % و اقتاده بارسان % % الشعر حبل فتان % % 10(@)(@@) % و الفرق فيه قد بان % % مثل الهدى 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms396# في الطغيان % % PageV01P2006 11(@)(@@) % أين طريق السلوان % % ألردف عبل ريان % % 12(@)(@@) % فيه النقا والنعمان % % والخصر واه ظمآن % % 13(@)(@@) % تغيب فيه العينان % % كأنه في الأعكان % % 14(@)(@@) % سر طواه نسيان % % والقد لدن نشوان % % 15(@)(@@) % لين وفيه ليان % % واعجبا يا غطفان % % 16(@)(@@) % حلون مثل المران % % من لفؤادي الولهان % % 17(@)(@@) % أرق جفني وسنان % % ينهب نوم السهران % % 18(@)(@@) % منفرد في الأزمان % % كأحمد في الإعيان % % 19(@)(@@) % قاضي القضاه المعوان % % على الزمان إذا مان % % 20(@)(@@) % نعم ملاذ اللهفان % % أبلج طهر الأردان % % PageV01P2007 21(@)(@@) % من دنس الادران % % لا ضرع ولا وان % % 22(@)(@@) % أتعبه ذو الشان % % في الكرم والحسان % % 23(@)(@@) % ان الرئيس تعبان % % لراحتيه بحران % % 24(@)(@@) % و قال ضد سجلان % % جم الغمام الهتان % % 25(@)(@@) % من دون ذاك الامكان % % فالطل رشح البحران % % 26(@)(@@) % و البرق نار الشنان % % يا معملا بالقيعان % % 27(@)(@@) % كل أمون مدعان % % تقطع خيط الظلمان % % 28(@)(@@) % لذ بحماه القصان % % وطف بتلك الأركان % % 29(@)(@@) % و اسكن فروع ثهلان % % وادع كريما يقظان % % 30(@)(@@) % عن الملام كسلان % % وللعفاة عجلان % % PageV01P2008 31(@)(@@) % و بالثناء شبعان % % وهو اليه جوعان % % 32(@)(@@) % يغني ويضني الجوان % % كفاجر في نيسان % % 33(@)(@@) % ألفاظه وسحبان % % وحكمه ولقمان % % 34(@)(@@) % و مجده وكيوان % % بين النجوم الفان % % 35(@)(@@) % لم يختلف في ذا اثنان % % وماله في خذلان % % 36(@)(@@) % قد قتلته كفان % % أكياسه كالأكفان % % 37(@)(@@) % هذي العطايا الحسان % % لا جفنة في عنان % % 38(@)(@@) % فاق وفاء القينان % % شيوخهم والشبان % % 39(@)(@@) % كالبحر بين الخلجان % % والليث بين الذئبان % % 40(@)(@@) % سيان شأو الفرسان % % حيث العلوم ميدان % % PageV01P2009 41(@)(@@) % جري سواه بهتان % % والعدو معه عدوان % % 42(@)(@@) % ذو قلم في التبيان % % بادي السنا والبرهان % % 43(@)(@@) % يفر عنه الشيطان % % معلم من خفان % % 44(@)(@@) % بأس هزبر غوثان % % وجود غيم ملآن % % 45(@)(@@) % اذا قسا واذا لان % % وكل شيء إدمان % % 46(@)(@@) % طروسه كالغدران % % وخطه كالريحان % % 47(@)(@@) % و لفظه كالمرجان % % لفظ علي التبيان % % 48(@)(@@) % ما ظمئته الأذهان % % لا إنسها ولا الجان % % 49(@)(@@) % لولا التقى والإيمان % % لقيل فيه قرآن % % 50(@)(@@) % إيه فذاك الانسان % % إنسان كل إنسان % % PageV01P2010 51(@)(@@) % إن الغمام المنان % % يجودنا في الأحيان % % 52(@)(@@) % و وجهه كالغضبان % % وأنت دون إبان % % 53(@)(@@) % دائم صوب جذلان % % ما المنعمان سيان % % 54(@)(@@) % كاد نداك الطوفان % % يعطي العطا من لا كان % % 55(@)(@@) % كل الأنام ضيفان % % نزاعهم والقطان % % 56(@)(@@) % ما لثراك أكنان % % رفقا لشد ما هان % % 57(@)(@@) % لك الثناء المرنان % % بين حداة الركبان % % 58(@)(@@) % يشيب معن شيبان % % ويجدع ابن جدعان % % 59(@)(@@) % لولا عطاك الطنان % % به 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms397# دمشق تزدان % % 60(@)(@@) % كانت كبعض البلدان % % لا علم ولا بان % % PageV01P2011 61(@)(@@) % مع أن فيها سكان % % مرعى ولا كالسعدان % % 62(@)(@@) % يكتنفاه السعدان % % سر زكا وإعلان % % 63(@)(@@) % ما لسناه كتمان % % صبح أضاء الأكوان % % 64(@)(@@) % يثني عليه العصران % % من معشر ذوي شان % % 65(@)(@@) % شم الأنوف غران % % مجتمعين وحدان % % 66(@)(@@) % حلوا محل الجان % % من الكرام الشجعان % % 67(@)(@@) % طابوا وطاب الأصلان % % مخاثرا وألبان % % 68(@)(@@) % أبناؤهم والولدان % % مثل كعوب العيدان % % 69(@)(@@) % أقدارهم في أوطان % % لها البروج جدران % % 70(@)(@@) % و النيرات جيران % % يكاد يأتي العطشان % % PageV01P2012 71(@)(@@) % إلى السحاب أشطان % % يا شاربا بأثمان % % 72(@)(@@) % من عرفه والعرفان % % مدحا يحلي الآذان % % 73(@)(@@) % حيث الزمان خوان % % ووجهه كالصوان % % 74(@)(@@) % يبيع مثلي مجان % % والشعر بين الخلان % % 75(@)(@@) % كالشمس بين العميان % % تمل مدحا قد زان % % 76(@)(@@) % روض العلى بأكوان % % شقائقا وحوذان % % 77(@)(@@) % ما لفصيح ذبيان % % شقيقه في النعمان % % 78(@)(@@) % خدمة بعض الغلمان % % نظم فيك ديوان % % 79(@)(@@) % في كل حرف حسان % % وكل بيت سلمان % % 80(@)(@@) % و اهنأ بعيد الرضوان % % وانحر ضحاياك الآن % % PageV01P2013 81(@)(@@) % أعاديا وقربان % % وابق فكلنا فان % % 82(@)(@@) % ذا قوة وسلطان % % لا تخش ضد معيان % % 83(@)(@@) % يكيد كيد السرحان % % إن النجوم أعوان % % 84(@)(@@) % لك العلى والرجحان % % وللأنام النقصان % % 85(@)(@@) % مادام فيها ميزان % % PageV01P2014 البحر : - 1(@)(@@) % من عذيري من الطلا والأغاني % % وليال مرت على حلوان % % 2(@)(@@) % ذهبت بالذي ملكت من الما % % ل كأني سبكة في القناني % % 3(@)(@@) % ونديم يسعى بكأسيه مسعى % % قمر التم حوله الفرقدان % % 4(@)(@@) % أهيف قسمت لواحظه السو % % د زكاة الغنى على الغزلان % % 5(@)(@@) % يتثنى وحليه يتغنى % % هل سمعت الحمام في الأغصان % % 6(@)(@@) % وغوان تغني عن الطيب والح % % لي لهذا تسمى الملاح غواني % % 7(@)(@@) % ضاربات الدفوف في جيش لهو % % طاعنات الهموم بالعيدان % % 8(@)(@@) % يا نديمي في المدام فداء % % لكما في المدامة العاذلان % % 9(@)(@@) % خلقا البيت بالكؤس سرورا % واشرباها صفراء كالزعفران % % 10(@)(@@) % و اسقياني فان تشكيت داء % % فاسقياني ان شئتما تشفياني % % PageV01P2015 11(@)(@@) % و إذا ما قتلت بالراح سكرا % فادفناني في بعض تلك الدنان % % 12(@)(@@) % و انضحا من دمي عليه فقد كا % % ن دمي من نداه لو تعلمان % % 13(@)(@@) % جددا لي عيشا على السفح قدما % أي عيش مضى وأي مكان % % 14(@)(@@) % ذاك دهر كأنني كنت فيه % % بين حال الوسنان واليقظان % % 15(@)(@@) % احتسي الراح لا بكيل وأعطى % % كرما ذا وذا بلا ميزان % % 16(@)(@@) % و أعاني العيش الهني 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms398# وأهني ال % % عيش يا صاح عيشة النشوان % % 17(@)(@@) % مستريحا من حرفتي أدبي الغ % % ض وعقلي في مثل هذا الأوان % % 18(@)(@@) % إثن عني يا دهر نارك إني % % لحمى الاحمدي ثاب عناني % % 19(@)(@@) % الكبير الذي تعلم نعمى % % كفه الناس سحر هذا البيان % % 20(@)(@@) % قاتل المال بالنوال فما أك % % ياس أمواله سوى أكفان % % PageV01P2016 21(@)(@@) % جار حتى ظن الغريب ندى كفه % % يه هزؤا بالمقتر اللهفان % % 22(@)(@@) % و تعدى الكرام سبقا إلى أن % % قيل ماذا في قدرة الانسان % % 23(@)(@@) % همة جازت السماك وفي عق % % ل الأعادي وحالها دبران % % 24(@)(@@) % و ندى شب ذكره فنسينا % % ما سمعناه عن فتى شيبان % % 25(@)(@@) % و فخار ما بين عرض عزيز % قد تربت وبين مال مهان % % 26(@)(@@) % و جواد اذا اجتبى وحبا الما % % ل فقل في السيول من ثهلان % % 27(@)(@@) % فاطلب رفده اذا كنت ممن % % يرتقي كائنا على كيوان % % 28(@)(@@) % ذاك قدر نائي المكان ولكن % % ذاك رفد لطالب الرفد داني % % 29(@)(@@) % و محل سامي السماك إلى أن % % حررته كواكب الميزان % % 30(@)(@@) % شم نداه وذهنه الصفو واحذر % % من عوادي الطوفان والنيران % % PageV01P2017 31(@)(@@) % أي ذهن وأي بر وحلم % كله قد حلا لذوق الجاني % % 32(@)(@@) % و كلام لو قلد الغيد عقدا % فرطت في قلائد العقيان % % 33(@)(@@) % قسما من طروسه الغر بالنو % % ر ومن نفس خطها بالدخان % % 34(@)(@@) % إنها كالظباء في أعين الخل % % ق ومثل الشنوف في الآذان % % 35(@)(@@) % من نظام يعشو له الاعشيان % % ونثار يعنو له العبدان % % 36(@)(@@) % و يراع بكفه هو عندي % % قصب السبق حازه والرهان % % 37(@)(@@) % خطه والكلام حلوان لكن % % هو يوم الوغى من المران % % 38(@)(@@) % ما رأينا كريقه يبرئ الس % % م اذا اهتز وهو كالثعبان % % 39(@)(@@) % يا جوادا أنشى المدائح معنى % % بنوال يريك معنى ثاني % % 40(@)(@@) % رب ليل قد خضته لك بحرا % متعب الحوت واقف السرطان % % PageV01P2018 41(@)(@@) % و نهار كأنما الآل فيه % % مرهف في الوغى بكف جبان % % 42(@)(@@) % واثق الوعد من طرابلس الشا % % م بجود حيث التقى البحران % % 43(@)(@@) % مهديا من مدائحي لك عذرا % % ء لها فيس القريض رفعة شان % % 44(@)(@@) % لم يحك وشيها ابن أبي سل % % مى لرب المكارم ابن سنان % % 45(@)(@@) % لا ولا قال في القريض شقيقا % لحلاها زياد في النعمان % % 46(@)(@@) % من حسان لدي لم تهد إلا 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms399# % % لفلان من الورى وفلان % % 47(@)(@@) % فتهنى بها فرب كريم % % قبلنا عد مثلها في التهاني % % 48(@)(@@) % و ابق حتى يبلى الجديدان من طو % % ل نواء ويلتقي الخافقان % % 49(@)(@@) % لي ذكر سار بودك في الخل % % ق فلو لم تجد علي كفاني % % PageV01P2019 البحر : - 1(@)(@@) % جسمي أبو ذر الضنا فذروني % % أروي لأحبائي حديث شجوني % % 2(@)(@@) % ياأيها اللوام دينكم لكم % % في الصبر عن ليلي ولي أنا ديني % % 3(@)(@@) % مذ فاح في ليلاي مندل عشقتي % % أنا تابع في الحب للمجنون % % 4(@)(@@) % يومي على ليلاي عام كامل % ألصيف قلبي والشتاء جفوني % % 5(@)(@@) % أفدي التي بالخال جانب صدغها % % أنا مقسم بالنون والتنوين % % 6(@)(@@) % في خدها ذهب أنادي غوثه % % يا أيها المصري ياذا النون % % 7(@)(@@) % و بسين طرتها وواقد خدها % % طال التعلل بين قد والسين % % 8(@)(@@) % أغدو على المفروض من وجد ومن % % حد الجفا أمسى على المسنون % % 9(@)(@@) % و هويتها كالروض يزهو حسنها % % ما شاء فهي كثيرة التلوين % % 10(@)(@@) % و أبيعها روحي فيالك روضة % % ليست بفضل ربيعها تشريني % % PageV01P2020 11(@)(@@) % و أظل من إعسار مصطبري ويا % % عجبا لها في ربقة المسجون % % 12(@)(@@) % حب ابنة العشرين صير قاطع الست % % ين في عقد من التسعين % % 13(@)(@@) % أسري كما أمرت سري فكم على % % رأسي وهامي بالضنا تبريني % % 14(@)(@@) % ياليل مابصق المشيب بعارضي % % إلا لذلي في هواك وهوني % % 15(@)(@@) % لا تعجلي في قتل مثلي إنني % % عبد مليت فأخريه لحين % % 16(@)(@@) % أنفقت ماضي العمر فيك صبابة % % وعليك أنفق ما بقي فدعيني % % 17(@)(@@) % ما مثل أغزالي لحسنك لا ولا % % مثل امتداحي في علاء الدين % % 18(@)(@@) % هذا وحظي في الصبابة والولا % % بالصد حظ البائس المسكين % % 19(@)(@@) % جهد المقل دموعه فتأملا % % في صفو شعري دمعة المحزون % % 20(@)(@@) % ماذا يقول تغزلي في زينة % % بدوية تغني عن التزيين % % PageV01P2021 21(@)(@@) % و تقول مدائحي لمحاسن % علوية تعلو على التحسين % % 22(@)(@@) % أما علي فهو عين سيادة % % لم يفتقر أصلا إلى تعيين % % 23(@)(@@) % ذو العدل لا تخلو الممالك منه في % % جون الغمائم في السنين الجون % % 24(@)(@@) % والرأي كم من راية بيضاء قد % % قامت بصبح من سناه مبين % % 25(@)(@@) % والجود من جاه ومال شامل % لا مانع الجدوى ولا الماعون % % 26(@)(@@) % مجدي الأنام قريبهم وبعيدهم % % حتى طعام فقيرهم في الصيني % % 27(@)(@@) % أما علاه وبشره فكلاهما % % بلغ 
urn:cts:arabLit:0768IbnNubataShacir.Diwan.JK007636-ara1:ms400# الهلال وتلة لجبين % % 28(@)(@@) % وللفظة عمرية عمرية % % بين البيان تجول والتبيين % % 29(@)(@@) % في بحر يمناه منافع للورى % % تجري بفك يراعه المشحون % % 30(@)(@@) % ولفضله في كل مقصد قاصد % كم يسار واصل ليمين % % PageV01P2022 31(@)(@@) % جمعت إلى جزل القديم بعفوها % % لطف الحديث وجاوزت بفنون % % 32(@)(@@) % يقضي بسعد نجومها من لادرى % % فلكا بلا حدس ولا تخمين % % 33(@)(@@) % لا يرهب التربيع طالع حسنها % % ويجل جوهرها عن التثمين % % 34(@)(@@) % بمباحث قد ناضلت بنواقد % وفوائد قد غازلت بعيون % % 35(@)(@@) % ويراعة إن قلت يقريني العطا % % فلقد يقول بعلمها يقريني % % 36(@)(@@) % بيمين متصل العلى حلف الورى % % أن لا مثيل له بكل يمين % % 37(@)(@@) % سباق سعي في العلى ومكارم % بذل لعون في الندى ومعين % % 38(@)(@@) % فالفضل مقتبل بغير معارض % والمجد منفرد بغير قرين % % 39(@)(@@) % يا سيد السادات دعوة خادم % نظام أسلاك بغير خدين % % 40(@)(@@) % يا ابن الأولى نقلوا أحاديث الهدى % % عن خير خلق الله عن جبرين % % PageV01P2023 41(@)(@@) % يا ابن الخلائف من عدي حقه % % ميراث عدل دائم التمكين % % 42(@)(@@) % ألله في متكشف الأحوال بل % % ميت بسوء الحال غير دفين % % 43(@)(@@) % عاد الذين رجوت صحبتهم غدا % فتقسمت فيمن أحب ظنوني % % 44(@)(@@) % وعدوا على ضعفي وضعف بني ما % % رحموا ضرورتهم ولا رحموني % % 45(@)(@@) % وتخيفوا رزقي الزهيد وما ورثوا % % عندي لجوع قبائل وبطون % % 46(@)(@@) % ولخاطري كسروا ولكن كلما % % ظفروا بلحمي مأكلا جبروني % % 47(@)(@@) % حتى لقد حموا سلاح خزائن % % قال الرجاء بمثله ذبحوني % % 48(@)(@@) % قطعوا الوصول وعوضوا غيري وما % % جاروا ابن عمهم ولا ظلموني % % 49(@)(@@) % يا مقطعا قلبي وقاطع عادتي % % من عاجل التأميل والتأمين % % 50(@)(@@) % ان كنت في الأمداح فلاحا لكم % % فأمر بتعويني وبالتضمين % % PageV01P2024 51(@)(@@) % وتلق بالإقبال كل نظيمة % علقت بحبل من ولاك متين % % 52(@)(@@) % غنى بها الشادي وأعرب نظمها % % فزهت على التعريب والتلحين % % PageV01P2025 البحر : - 1(@)(@@) % عرفت بخدام البكا أجفانه % % إن غاب لؤلؤ أتى مرجانه % % 2(@)(@@) % باك يرى كتم الغرام وإنما % % عن شانه أضحى يعير شانه % % 3(@)(@@) % حث التفرق دمعه فتشكلت % % أشكاله وتلونت ألوانه % % 4(@)(@@) % شوقا كما حكم الفراق لمالك % ولى ولكن عندنا نيرانه % % 5(@)(@@) % ولربما منح الرضا واليوم لا % % وأبيك مالكه ولا رضوانه % % 6(@)(@@) % بأبي مغيث العين قدس جماله % % لا عين عاشقه ولا سلوانه % % 7(@)(@@) % ورقيم حاشية العذار وكل ذي % % حسن بحاشية الفتى غلمانه % % 8(@)(@@) % خط على 