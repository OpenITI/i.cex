urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms1#(@)(@)(@@) البحر : - 1(@)(@@) % الآن إذ برد السلو ظمائي % % و أصاب بعدكم الأساة دوائي % % 2(@)(@@) % كانت عزيمة حازم أضللتها % % في قربكم فأصبتها في النائي % % 3(@)(@@) % آليت لا رقب الكواكب ناظري % % شوقا ولا مسح الدموع ردائي % % 4(@)(@@) % أمس من الأهواء عفى رسمه % % بيد النهى يوم من الآراء % 5(@)(@@) % و قذاء قلبي أن يحن لناظر % يوم الرحيل تفرق الخلطاء % 6(@)(@@) % دعهم ومن حملته حمر جمالهم % % للبين من حمراء في بيضاء % 7(@)(@@) % مستمطرين ولم تجدهم أدمعي % % و مؤججين وما لهم أحشائي % % 8(@)(@@) % كانوا النواظر عزة لكنهم % % غدروا فلم تطبق على الأقذاء % 9(@)(@@) % و لقد يغادرني وحيدا مخفقا % خبث المعاش وقلة النجباء % 10(@)(@@) % أظمى وريي في السؤال فلا يفي % % حر المذلة لي ببرد الماء % PageV01P001 11(@)(@@) % قالوا سخطت على الأنام وإنما % % سخطى لجهلهم بوجه رضائي % % 12(@)(@@) % صور تصرف أنفس الأموات في % % أجسامها بجوارح الأحياء % 13(@)(@@) % ألقي إلى الصماء بثى منهم % و أعير شمسى ناظر العشواء % 14(@)(@@) % بأبي غريب بينهم في داره % % متوحد بتعدد النظراء % 15(@)(@@) % يفديك مستامون لا عن قيمة % مسمون والمعنى سوى الأسماء % 16(@)(@@) % يتطاولون ليبلغوك ولم يكن % % ليضمهم وعلاك خط سواء % 17(@)(@@) % و إذا جريت على الرهان وبهمهم % % لاق الخلوق بجبهة الغراء % 18(@)(@@) % و الشامة البيضاء تنعت نفسها % % بوضوحها في الجلدة السوداء % 19(@)(@@) % عجزت قرائحهم وأغدر غادر % يوم الخصام الفاء بالفأفاء % 20(@)(@@) % لبيك عدة ما أتاني غافلا % % عنك الرواة بطيب الأنباء % PageV01P002 21(@)(@@) % و غلوت في وصفي فقلت سجية % ما زلت أعرفها من الكرماء % 22(@)(@@) % عمي الورى عن وجهها فرأيته % و هو البعيد بناظري زرقاء % 23(@)(@@) % قد كنت أظهرها وتخفى بينهم % % ما للغنى أثر على البخلاء % 24(@)(@@) % لا ارتعت إذ أعطيت منك مودة % ماذا أسر الناس من بغضائي % % 25(@)(@@) % و صداقتي للفاضلين شهادة % بالنقص ثابتة على أعدائي % % 26(@)(@@) % نسب مزجنا لا تميز بيننا % % فيه امتزاج الماء بالصهباء % 27(@)(@@) % و مودة الأبناء أحسن ما ترى % % موروثة عن نسبة الآباء % PageV01P003 البحر : - 1(@)(@@) % يا عين لو أغضيت يوم النوى % % ما كان يوما حسنا أن يرى % % 2(@)(@@) % كلفت أجفانك ما لو جرى % % برمل يبرين شكا أو جرى % % 3(@)(@@) % جناية عرضت قلبي لها % % فاحتملي أولى بها من جنى % % 4(@)(@@) % سل ظبيات بالحمى رتعا % خضر منهن بياض الحمى % % 5(@)(@@) % نشدتكن الله ما حيلة % صاد 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms2# بها الأسد عيون المها % % 6(@)(@@) % إن تك سحرا أولها فعله % فالسحر يشفي منه طب الرقى % % 7(@)(@@) % فيكن من حشو جلابيبه % % أهيف راوى الردف ظامى الحشا % % 8(@)(@@) % قلبي له مرعى وصدري كلا % ليت كلا ظبى الحمى ما رعى % % 9(@)(@@) % يا بأبي غضبان لو أنه % % يرضى بغير القتل نال الرضا % % 10(@)(@@) % أغص بالماء حفاظا لما % % فارقته في فمه من لمى % % PageV01P004 11(@)(@@) % ما لدماء الحب مطلولة % أهكذا فيهن دين الدمى % % 12(@)(@@) % إن كانت الأعراض مجزية % فعاقب الله الهوى بالهوى % % 13(@)(@@) % لله قلب حسن صبره % ما سئل الذلة إلا أبى % % 14(@)(@@) % و صاحب كالسيف ما صادفت % % ضربته غرباه إلا مضى % % 15(@)(@@) % يركب في الحاجات أخطارها % % إما خسا فيها وإما زكا % % 16(@)(@@) % يقيل إن هجر في ظله % % و يحسب الليل البهيم الضحى % % 17(@)(@@) % كأنه في الخطب بالحظ أو % % بدر بني عبد الرحيم اهتدى % % 18(@)(@@) % فداء من يحسن أن يوسع ال % % إحسان قوم خلقوا للفدى % % 19(@)(@@) % جاد على الأملاك واستظهروا % % بالمنع بخلا في زمان الغنى % % 20(@)(@@) % تبعث أحشاؤهم غيظه % % إلى حلوق حسبته الشجا % % PageV01P005 21(@)(@@) % أراهم عجزهم ناهض % بالثقل ما استضوئ إلا ورى % % 22(@)(@@) % من معشر تضمن تيجانهم % % صوع المعالي وعياب النهى % % 23(@)(@@) % ترفع منهم عن جباه بها % % أبهة الملك عفا أو سطا % % 24(@)(@@) % للعز حشد دون أبوابهم % % يشعرك الخوف ولما يرى % % 25(@)(@@) % إذا أحبوا غاية حرموا % % دون مداها أن تحل الحبى % 26(@)(@@) % قل للحسين بن علي وما % % نماك أصل الخير حتى نما % % 27(@)(@@) % أديت عنهم فاحتبت روضة % تنبت بالنضرة فضل الحيا % % 28(@)(@@) % مناقب يجمعنا مجدها % % جمع العرى في عقدات الرشا % % 29(@)(@@) % لذاك ما ظلل لي واسع % أرتع منه آمنا في حمى % % 30(@)(@@) % كأنني في دوركم منكم % في غير ما يخطر أو يحتمى % % PageV01P006 31(@)(@@) % في نعمة منكم إذا استكثرت % منها الفرادي أعقبتها الثنى % % 32(@)(@@) % يحسدني الناس عليها ولو % % قطعني حاسدها ما اعتدى % % 33(@)(@@) % نشرتها شكرا ولو أنني % % طويتها نمت نميم الصبا % % 34(@)(@@) % فلتبق لي أنت فحقا إذا % % وجدت قولي لا عدمت المنى % % 35(@)(@@) % في نعمة ليست بعارية % تضمن أو مقروضة تقتضى % % 36(@)(@@) % يعضد فيها العام ما قبله % و يفضل اليوم أخوه غدا % % 37(@)(@@) % في كل يوم لك عيد فما % % يغرب في عينيك عيد أتى % % 38(@)(@@) % و خذ من الأضحى بسهميك 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms3# من % % حظين في آخرة أو دنى % % 39(@)(@@) % أجرك مذخور لها ذاك وال % % نيروز موفور على حفظ ذا % % 40(@)(@@) % ما طيف بالأستار في مثله % و دامت المروة أخت الصفا % % PageV01P007 البحر : - 1(@)(@@) % ما لكم لا تغضبون للهوى % % و تعرفون الغدر فيه والوفا % % 2(@)(@@) % إن كنتم من أهله فانتصروا % % من ظالمي أو فاخرجوا منه برا % 3(@)(@@) % أما ترون كيف نام وحمى % % عيني الكرى فلم ينم ظبي الحمى % % 4(@)(@@) % و كيف خلاني بطيئا قدمى % % عنه ومر سابقا مع الونى % % 5(@)(@@) % غضبان يا لهفي كم أرضيته % % لو كان يرضى المتجنى بالرضا % % 6(@)(@@) % ما لدليل نصلت ركابه % من الدجى حاملة شمس الضحى % % 7(@)(@@) % ضل ولو كان له قلبي اهتدى % % بناره أو شام جفني سقى % % 8(@)(@@) % قالوا الغضا ثم تنفست لهم % % فهم يدوسون الحصا جمر الغضا % % 9(@)(@@) % بين الحدوج مترف يزعجه % لين مهاد ورفيقات الخطا % % 10(@)(@@) % عارضني يذكرني الغصن به % % و أين منه ما استقام وانثنى % % PageV01P008 11(@)(@@) % حي وقرب بالكثيب طارقا % % من طيف حسناء على الخوف سرى % % 12(@)(@@) % عاتب عنها واصفا مودة % ما أسأرت إلا علالات الكرى % % 13(@)(@@) % أضم جفني عليه فرقا % من الصباح وعلى ذاك انجلى % % 14(@)(@@) % كأنني عجبا به وشعفا % محبة العمدة في حب العلا % % 15(@)(@@) % شمر للمجد وما تشمرت % له السنون يافع كهل الحجا % % 16(@)(@@) % و قام بالرأي فكان أول % من رأيه وآخر الحزم سوا % % 17(@)(@@) % سما إلى الغاية حتى بلغت % همته به السماء وسما % % 18(@)(@@) % فابن الملوك بالملوك يقتدى % % و ابن البحار بالبحار يبتغى % % 19(@)(@@) % سكنتموها فاضحين جودها % % مبخليها بالسماح والندى % % 20(@)(@@) % نشلتم الملك وقد تهجمت % سائلة بلغت الماء الزبى % % PageV01P009 21(@)(@@) % و اعترضت وجه الطريق حية % صماء لا تصغى لخدعات الرقى % 22(@)(@@) % أنكر فيها الملك مجرى تاجه % و قام عن سريره وقد نبا % % 23(@)(@@) % لفت على العراق شطرا وانثنت % % لفارس فدب سم وسرى % % 24(@)(@@) % لم تدر أن بعمان حاويا % ما خرزات سحره إلا الظبا % % 25(@)(@@) % يتركها تفحص عن نيوبها % % درداء تستاف التراب باللها % % 26(@)(@@) % سبقا أتتك وحمتك حسرا % % عن هذه الدولة هاذاك العشا % % 27(@)(@@) % مهلا بني مكرم من سماحكم % % قد أثمر المصفر واخضر الثرى % % 28(@)(@@) % إن كنتم الغيث تبارون به % % فحسبكم ما يفعل الغيث كذا % % 29(@)(@@) % يا نجم كانت مقلتي تنظره % حتى استنار بدر 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms4# تم واستوى % % 30(@)(@@) % صحبته ريحانة فلم يزل % % دعاى حتى طال غصنا ونما % % PageV01P010 31(@)(@@) % اذكر ذكرت الخير ما لم تنسه % من صحبتي ذكرك أيام الصبا % % 32(@)(@@) % و حرمة شروطها مكتوبة % على جبين المجد راعوا حق ذا % % 33(@)(@@) % ما نعمة تقسمها إلا أنا % % بها أحق من جميع من ترى % % 34(@)(@@) % أي جمال زنتني اليوم به % % زانك بين الناس من مدحي غدا % % 35(@)(@@) % لا تعدم الأيام أو عبيدكم % % نعماء منكم تحتذى وتجتدى % % 36(@)(@@) % و لا تزل أنت مدى الدهر لنا % % كهفا إلى أن لا ترى الدهر مدى % % 37(@)(@@) % كل صباح واجهتك شمسه % عيد وكل ليلة ليل منى % % 38(@)(@@) % إن نحروا فرضا فقم نافلة % % فانحر عداك حسدا بلا مدى % % 39(@)(@@) % و ابق على ما قد أحل محرم % و ما دعا عند الطواف وسعى % % PageV01P011 البحر : - 1(@)(@@) % ما مكرم هين الآباء يكرهه % % أبناء قوم ويرضى عنه آباء % 2(@)(@@) % صين لدى الله باسم واحد وغدا % % مشهرا فيه بين الناس أسماء % 3(@)(@@) % تلقى به شقة عيناك وهو غدا % % فيه شقاء لأقوام و نعماء % 4(@)(@@) % إذا وسمت علامات به فبدت % % تلوح فهي له ستر وإخفاء % 5(@)(@@) % فإن كسته ثياب العز ناسجة % يد صناع نفتها عنه خرقاء % PageV01P012 البحر : - 1(@)(@@) % ساهرة الليل نؤوم الضمحى % % ريانة والأرض تشكو الظما % % 2(@)(@@) % رائحة في السرب لم تقتنص % ظباؤه إلا بأمر الدجى % % 3(@)(@@) % ملتئم فوها وإن لم يكن % % في شفتيها ما لها من لمى % % 4(@)(@@) % حية ماء ناقع سمها % % و ناقع سم أفاعي الصفا % % 5(@)(@@) % تعطيك مها ألسنا عدة % مجتمعات كلها في لها % % PageV01P013 البحر : - 1(@)(@@) % أيها العاتب ما ذا % % ك وما أعرف ذنبي % % 2(@)(@@) % أتظن الدمع دينا % تتقاضاه بعتب % % 3(@)(@@) % إن تكن أنكرت حفظي % % لك وارتبت بحبي % 4(@)(@@) % فبعين الله يا ظا % % لم عيناي وقلبي . % PageV01P014 البحر : - 1(@)(@@) % عذيرى من باغ علي أحبه % و لم أر بغيا قبله جره الحب % 2(@)(@@) % يعاتبني في الهجر والهجر دينه % % و قد كان حلوا لو حلا وده العتب % 3(@)(@@) % و أسلك طرق الوصل وهو محبب % فإن ضل حق بيننا فله الذنب % 4(@)(@@) % بعثت ندوبا من تجنيك يا أبا ال % % حسين سهاما لا يقوم لها قلب % 5(@)(@@) % أذكرا بما سر الوشاة وتهمة % لعهدي وقولا في أسهله صعب % 6(@)(@@) % و ذما ولو 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms5# ما جاء غيرك خاطبا % جزاء به مني لقد سهل الخطب % 7(@)(@@) % و كم جرعت مني رجال بحورها % % كئوس انتقام مرها في فمي عذب % 8(@)(@@) % بأي وفاء خلتني حلت عن هوى % و مثلي لا يسلو وفي الأرض من يصبو % % 9(@)(@@) % تصفح صحاب الخير والشر وانتقد % % بقلبك تحرزني إذا نبذ الصحب % 10(@)(@@) % و لا تتمكن من يقينك ريبة % فتنبو فإن الصارم العضب لا ينبو % % PageV01P015 11(@)(@@) % سلمت من الحساد فيك فإنهم % % إذا مكنوا من نار فتنتهم شبوا % % 12(@)(@@) % و لا أطفأت منك الليالي بجورها % % على العبد رأيا كان يقدحه القلب % PageV01P016 البحر : - 1(@)(@@) % حمام اللوى رفقا به فهو لبه % جوادا رهان نوحكن ونحبه % 2(@)(@@) % قراكن من لا ينقع الطير ماؤه % % و لا يشبع النوق السواغب عشبه % 3(@)(@@) % و طرتن حيث القانص امتد حبله % و طالت فلم تعد القوادم قضبه % 4(@)(@@) % أعمدا تهيجن امرأ بان أنسه % % و أسلمه حتى أخوه وصحبه % 5(@)(@@) % أمر ومهري مغرمين على اللوى % % فأسأله أو كاد ينطق تربه % 6(@)(@@) % من الحي تستق العرضنة عيسه % إزاءك حتى امتد كالسطر ركبه % 7(@)(@@) % و في الظعن محسود الحواضر مترف % تلاث على خد الغزالة نقبه % 8(@)(@@) % تطول على الصواغ حين يمدها % % خلاخيله الملأى وتقصر حقبه % 9(@)(@@) % جهدنا فلم ندرك على أن خيلنا % % سواء عليها سهل سير وصعبه % 10(@)(@@) % و قد فطنت للشوق فهي تسرعا % % تكاد تعد السير يوم تغبه % PageV01P017 11(@)(@@) % أكل ظمائي غائض ما يبله % % و كل سقامي معوز من يطبه % 12(@)(@@) % تلاعبت بي يا دهر حتى تركتني % % و سيان عندي جد خطب ولعبه % 13(@)(@@) % و أبعدت من أهوى فإن كنت مرمعا % % لتسلبني عنهم فسعد وقربه % 14(@)(@@) % بودي وهل يغنى عن المرء وده % % و أشياعه فيما يحاول حزبه % 15(@)(@@) % سلكت مجاز العز بيني وبينه % % تحط روابيه وتهتك حجبه % 16(@)(@@) % و لو أن أرضا مهلكا هان قطعها % % و لو أن ماء من دم ساغ شربه % 17(@)(@@) % إلى قمر طرفي تعلل دونه % % و كم قمر غطته دوني سحبه % 18(@)(@@) % أبا القاسم المرعى مرير نباته % يبيس وحلو العيش عندك رطبه % 19(@)(@@) % أقول وما داجتك زورا محبتي % % و قد يفرط الإنسان فيمن يحبه % 20(@)(@@) % زكا غصن من آل ضبة أصله % أبوك له فرع وإنك عقبه 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms6# % PageV01P018 21(@)(@@) % علاء تملت منه بالود عجمه % لصحبها واستبقت العز عربه % 22(@)(@@) % رأى بك ما أنسى ابن غيل شبوله % فخيرا بخير أو فشرا يذبه % 23(@)(@@) % قليلا على حكم النجابة شبهه % كثيرا على ما توجب السن تربه % 24(@)(@@) % لئن أخرتني عن فنائكما التي % % عتبت لها دهري فلم يجد عتبه % 25(@)(@@) % و ستوفني رؤياكما فألط بي % % فعادته في أخذ حقي غصبه % 26(@)(@@) % فيا ليته أدنى مزاري منكما % % و أهلى مرعاه وداري نهبه % 27(@)(@@) % و ما أنا من تصبيه أوطان بيته % % لعاجل أمر سر والعار غبه % 28(@)(@@) % إذا أنا أبغضت الهوان وداره % % فأهون ما فارقته من أحبه % 29(@)(@@) % صلونا فإنا مجدبون بمنزل % يضيق على الأيام بالحر رحبه % 30(@)(@@) % سواء به يا آل ضة ليثه % إذا سار يبغي الرزق فيه وضبه % PageV01P019 31(@)(@@) % و كانوا عيارا ربما جاد بعضهم % % فأعدى صحاح السرح يا سعد جربه % 32(@)(@@) % يعز عليكم كيف يرجع مرملا % % غلام من الآداب والمجد كسبه % 33(@)(@@) % تقدمني قوم وما ذاك ضائري % % لديكم إذا ما أخلص الزبد وطبه % 34(@)(@@) % أبانهم تلفيق جهل يربهم % % و أخملني تحقيق فضل أربه % 35(@)(@@) % تحل بها يا سعد فهي قلادة % يزين فيها فاخر الدر ثقبه % 36(@)(@@) % هدية خل إن جعلت ودادك ال % % صداق لها مع فقره فهو حسبه % 37(@)(@@) % يرفعه عن بذلة البعد عتبه % و همته العليا إلى الناس ذنبه % 38(@)(@@) % و لي أختها عند الوزير تلوح في % % دجى الليل أو تبدو فتخجل شهبه % 39(@)(@@) % يلذ لها مد النشيد ولينه % % و يزهى بها رفع الكلام ونصبه % 40(@)(@@) % لها حسنها لكن أريدك شافعا % و خير شفيع لي إلى الجسم قلبه % PageV01P020 البحر : - 1(@)(@@) % دواعي الهوى لك أن لا تجيبا % % هجرنا تقى ما وصلنا ذنوبا % % 2(@)(@@) % قفونا غرورك حتى انجلت % أمور أرين العيون العيوبا % % 3(@)(@@) % نصبنا لها أو بلغنا بها % % نهى لم تدع لك فينا نصيبا % % 4(@)(@@) % و هبنا الزمان لها مقبلا % % و غصن الشبيبة غضا قشيبا % % 5(@)(@@) % فقل لمختوفنا أن يحول % % صبا هرما وشباب مشيبا % % 6(@)(@@) % وددنا لعفتنا أننا % % ولدنا إذا كره الشيب شيبا % % 7(@)(@@) % و بلغ أخا صحبتي عن أخيك % % عشيرته نائيا أو قريبا % % 8(@)(@@) % تبدلت من ناركم ربها % % و خبث مواقدها الخلد طيبا % % 9(@)(@@) % حبست عناني مستبصرا % % بأية يستبقون الذنوبا 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms7# % % 10(@)(@@) % نصحتكم لو وجدت المصيخ % و ناديتكم لو دعوت المجيبا % % PageV01P021 11(@)(@@) % أفيئوا فقد وعد الله في % % ضلالة مثلكم أن يتوبا % % 12(@)(@@) % و إلا هلموا أباهيكم % فمن قام والفخر قام المصيبا % % 13(@)(@@) % أمثل محمد المصطفى % % إذا الحكم وليتموه لبيبا % % 14(@)(@@) % بعدل مكان يكون القسيم % و فصل مكان يكون الخطيبا % % 15(@)(@@) % و ثبت إذا الأصل خان الفروع % و فضل إذا النقص عاب الحسيبا % % 16(@)(@@) % و صدق بإقرار أعدائه % % إذا نافق الأولياء الكذوبا % % 17(@)(@@) % أبان لنا الله نهج السبيل % ببعثته وأرانا الغيوبا % % 18(@)(@@) % لئن كنت منكم فإن الهجي % % ن يخرج في الفلتات النجيبا % % 19(@)(@@) % ألكني إلى ملك بالجبا % % ل يدفع دفع الجبال الخطوبا % % 20(@)(@@) % فتى يطرق المدح من بابه % % قرى كافيا وجنابا رحيبا % % PageV01P022 21(@)(@@) % قوافي تلك وردن النمي % % ر من جوده ورعين الخصيبا % % 22(@)(@@) % عواري تكسى ابتساماته % و في القول ما يستحق القطوبا % % 23(@)(@@) % و من آل ضبة غصن يهز % جنيا ويغمز عودا صليبا % % 24(@)(@@) % و كانوا إذا فتنة أظلمت % و أعوزهم من يجلى الكروبا % % 25(@)(@@) % تداعوه يا أوحدا كافيا % لنا مستخصا الينا حبيبا % % 26(@)(@@) % فكان لنا قمرا ما دجت % و ماء إذا هي شبت لهيبا % % 27(@)(@@) % أرى ملك آل بويه ارتدى % % عوارا بأن راح منه سليبا % % 28(@)(@@) % فإن يمس موضعه خاليا % % فما تعرف الشمس حتى تغيبا % % 29(@)(@@) % لك الخير مولى رميت المنى % % رشاء إليه فروى قليبا % % 30(@)(@@) % لحظى في حبس سيري الي % % ك رأى سأنظره أن يؤوبا % % PageV01P023 31(@)(@@) % إذا قلت ذا العام شاف بدت % % قوارف منع تجد الندوبا % % 32(@)(@@) % و لي عزمة في ضمان القبول % ستدرك إن ساعدتني هبوبا % % 33(@)(@@) % و إلا فتحمل شكرا اليك % % يشوق الخلى ويغرى الطروبا % % 34(@)(@@) % و عذراء تذكر نعماك بي % % و إن كنت لست بها مستريبا % % 35(@)(@@) % ستنكر فجأة عنوانها % % إذا هو أعطاك وسما غريبا % % 36(@)(@@) % فوف فقد جعل الدين ما % % تنفلت في الجود فرضا وجوبا % % 37(@)(@@) % و قد كنت عبدا قصيا وجدت % فكيف وقد صرت خلا نسيبا % % PageV01P024 البحر : - 1(@)(@@) % أخى في الود فوق أخى النسيب % و خلى دون كل هوى حبيبي % % 2(@)(@@) % و مولاي البغيد يقول خيرا % قريب قبل مولاي القريب % 3(@)(@@) % و ما دحى المصرح شاهدا لي % % فداء للمعرض في مغيبي % % 4(@)(@@) % فلا تتطلبي غلطات شوقي % % فما 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms8# إن زلت ذا شوق مصيب % 5(@)(@@) % أردتني ليملكني نفاقا % % سليم الوجه ذو ظهر مريب % 6(@)(@@) % و ألسنة تظاهرني صحاحا % و أعلمها بطائن للعيوب % % 7(@)(@@) % قد اعتذر الزمان بود خل % محا ما كان أسلف من ذنوب % 8(@)(@@) % أتتني طاب ما أتت ابتداء % بلا حق عليه ولا وجوب % 9(@)(@@) % يد منه وفت بيد الغمام ال % % مصيب همت على العام الحديب % 10(@)(@@) % فمثله التصور لي بقلب % يرى بالظن من خلل الغيوب % PageV01P025 11(@)(@@) % أبا حسن بدأت بها فتمم % % و إن لم تعطني إلا نصيبي % % 12(@)(@@) % صفاتك وهي تكشف عن قريضي % % يمين القين يشحذ عن قضيب % 13(@)(@@) % بنا ظمأ وعندكم قليب % و أنت رشاء هاذاك القليب % 14(@)(@@) % أبو العباس موئلناو سعد % فقل في الطود أو قل في الكثيب % 15(@)(@@) % رضيتك ثم لي ذخرا لنشر ال % % سليم الطي أو نشر المعيب % 16(@)(@@) % و غيرك من سكنت إليه كرها % كما سكن العذار إلى المشيب % 17(@)(@@) % متى سالمتني سلمت صفاتي % % على ما دس قوم من ذنوبي % % 18(@)(@@) % إذا نظر الحبيب بعين عطف % فأهون ناظر عين الرقيب % % PageV01P026 البحر : - 1(@)(@@) % شفى الله نفسا لا تذل لمطلب % و صبرا متى يسمع به الدهر يعجب % 2(@)(@@) % و صدرا إذا ضاقت صدور رحيبة % لخطب تلقاه بأهل ومرحب % 3(@)(@@) % بعيدا عن الأفكار ما كن حطة % فإن تك في كسب المكارم تقرب % % 4(@)(@@) % تمرن بأخلاقي فتى الحي إن تكن % % رفيقا فإما عاذرى أو مؤنبي % % 5(@)(@@) % تبغض إذا كنت الفقير وإن تكن % % غنيا فطامن للغنى وتحجب % 6(@)(@@) % إذا لم تجد ما يعظمونك رغبة % و أردت النصف منهم فأرهب % 7(@)(@@) % فإنك ما لم ترج أو تخش فيهم % و تقعد مع الوسطى تدسك فتعطب % 8(@)(@@) % أفق يا زماني ربما أنا صائر % % إلى سهل ما أرجو بفرط تصعبي % % 9(@)(@@) % أغرك في ثوب العفاف تزمل % % و أخذى مكان الآمل المترقب % 10(@)(@@) % إذا أنا طالت وقفتي فتوقنى % % فإن لها لا بد وثبة منجب % PageV01P027 11(@)(@@) % و يا صاحبي والذل للرزق مورد % أضن بنفسي عنه وهي تجود بي % % 12(@)(@@) % خذ النفس عني والمطامع إنها % % قد استوطأت من ظهرها غير مركبي % % 13(@)(@@) % حرام وإن أمحضت مطعم % % على إذا أداه أخبث مكسب % 14(@)(@@) % أأنت على هجر اللئام معنفى % % نعم أنا ثم فارض عني 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms9# أو اغضب % 15(@)(@@) % أألقى البخيل أجتديه بمدحة % خصيمان فيها شاهدي ومغيبي % % 16(@)(@@) % و أكذب عنه في عبارة صادق % كثير إذا في حيث أصدق مكذبي % % 17(@)(@@) % تعودته خلقا ثنائي لمحسن % أقول بما فيه وذمي لمذنب % 18(@)(@@) % فما سرني في الحق أني مع العدا % % و لا عاب أني في المحال على أبي % % 19(@)(@@) % و حاجة نفس دبر الحزم صدرها % % فأبت بها محمودة في المعقب % 20(@)(@@) % أريد بها الكافي بقلب معذب % مراد ابن حجر قبلها أم جندب % PageV01P028 21(@)(@@) % و ليل تمام قد قليت نجومه % % إليه يردن الشرق يذهبن مذهبي % % 22(@)(@@) % و ما لانفرادي ما لها من تجمع % % و لكن بقلبي ما بها من تلهب % 23(@)(@@) % و طود تخال الراسيات وهاده % % متى يبغ ظن العين أخراه يكذب % 24(@)(@@) % تراه ولم تظفر محلقة به ال % % قعاب بعيني عاجز في تهيب % 25(@)(@@) % سلكت فأداني بقلب ملفح % عظائم ما ألقى وجسم مجرب % 26(@)(@@) % إرادة حظ أتعبتني ومن تكن % % له حاجة في ذمة الشمس يتعب % 27(@)(@@) % فدى الأوحد الكافي جبان لسانه % شجاع بحيث القول غير مصوب % 28(@)(@@) % بخيل لو أن البحر بين بنانه % % و فرقها عن قطره لم تسرب % 29(@)(@@) % يساميه تغريرا برأي مشعث % يكد ولا يجدي وعرض مشعب % 30(@)(@@) % و منتسب يوم التفاخر مسفر % إذا انتسب الضبي قيل تنقب % PageV01P029 31(@)(@@) % أيا ساريا إما ركبت فلا تنخ % مريحا وإما ماشيا كنت فاركب % 32(@)(@@) % لعلك تأتي شرعة الجود سابقا % % بهاذاك مع فرط التزاحم تشرب % 33(@)(@@) % و قل يا أبا العباس بل يا أبا الورى % % فكلهم فيما ملكت بنو أب % 34(@)(@@) % أنا ذاك لم تكف اشتياقي زورة % بلى زادني بالبعد شجوا تقربي % % 35(@)(@@) % إذا كنت تهوى الشيء إما رأيته % % و أحببت أن تشقى فزر ثم جنب % 36(@)(@@) % أحن إذا الوفد استقلوا لقصدكم % % حنين الفتى العذري مر بربرب % 37(@)(@@) % و والله لم أهجركم العام عن قلى % % و لا أن سيرا نحوكم كان منصبي % % 38(@)(@@) % و ما صاحبي قلب بظن مرجم % إلى غيركم في العالمين مقلبي % % 39(@)(@@) % إذا أطرب الإبل الحداء فإنني % % إليكم متى غنيت فالجود مطربي % % 40(@)(@@) % و نفسي لكم تلك التي لودادها % % و لو أغضبت في واجب ألف موجب % PageV01P030 41(@)(@@) % أأمدح منها ما اختبرتم . وإنما % % يظن بعتق 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms10# السيف ما لم يجرب % 42(@)(@@) % هجرت لك الأقوام حبا فوفني % % يبن بي إلى جدوى يديك تحز بي % % 43(@)(@@) % و أشمتهم ذا العام أنك جرت بي % % و مذهبك العدل الصحيح ومذهبي % % 44(@)(@@) % لئن عتبوا أني تفردت دونهم % % بمدحك فاشهد أنني غير معتب % 45(@)(@@) % فإن خبثت أيديهم لي وأسهكت % فرب نوال طاهر لك طيب % PageV01P031 البحر : - 1(@)(@@) % هب من زمانك بعض الجد للعب % و اهجر إلى راحة شيئا من التعب % 2(@)(@@) % ما كل ما فات من حظ بليته % عجز ولا كل ما يأتي بمجتلب % 3(@)(@@) % لا تحسب الهمة العلياء موجبة % رزقا على قسمة الأقدار لم يجب % 4(@)(@@) % لو كان أفضل من في الناس أسعدهم % % ما انحطت الشمس عن عال من الشهب % 5(@)(@@) % أو كان أسير ما في الأفق أسلمهم % % دام الهلال فلم يمحق ولم يغب % 6(@)(@@) % يا سائق الركب غربيا وراءك لي % % قلب إلى غير نجد غير منقلب % 7(@)(@@) % تلفتا فخلال الضيق متسع % و رب منجذب في زي مجتنب % 8(@)(@@) % قف ناديا آل بكر في بيوتكم % بيضاء يطربها في حسنها حربى % % 9(@)(@@) % لما رأت أدمة نكرا وغائرة % شهباء راكضة في الدهم من قضبى % % 10(@)(@@) % لوت وقد أضحكت رأسي الخطوب لها % % وجها إلى الصد يبكيني ويضحك بي % % PageV01P032 11(@)(@@) % لا تعجبي اليوم من بيضائها نظرا % إلى سني فمن سودائها عجبي % % 12(@)(@@) % ما زلت علما بأن الهم محترم % عمر الشبيبة أبكيها ولم أشب % 13(@)(@@) % وسوم شيب فإن حققت ناظرة % فإنهن وسوم في للنوب % 14(@)(@@) % ترى نداماي ما بين الرضافة فال % % بيضاء راوين من خمر ومن طرب % 15(@)(@@) % أو عالمين وقد بدلت بعدهم % ما دار أنسى وما كأسي وما نشبي % % 16(@)(@@) % فارقتهم فكأني ذاكرا لهم % نضو تلاقت عليه عضتا قتب % 17(@)(@@) % سقى رضاي عن الأيام بينهم % غيث وبان عليها بعدهم غضبي % % 18(@)(@@) % إذ نسكب الماء بغضا للمزاج به % % و نطعم الشهد إبقاء على العنب % 19(@)(@@) % يمشي السقاة علينا بين منتظر % بلوغ كأس ووثاب فمستلب % 20(@)(@@) % كأنما قولنا للبابلى أدر % % حلاوة قولنا للمزيدي هب % PageV01P033 21(@)(@@) % فدى على جبان الكف مقتصر % من الفخار على الموروث بالنسب % 22(@)(@@) % يرى أبوه ولا ترضى مكارمه % % الأرض صحت وأودى الداء بالعشب % 23(@)(@@) % و مشبعون من الدنيا وجارهم % بادى الطوى ضامر 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms11# الجنبين بالسغب % 24(@)(@@) % قل للأمير ولو قلت السماء به % % مفضوحة الجود لم تظلم ولم تحب % 25(@)(@@) % أعطيت مالك حتى رب حادثة % أردت فيها الذي تعطى فلم تصب % 26(@)(@@) % لو سمت نفسك أن ترتاض تجربة % بحفظ ذات يد يومين لم تطب % 27(@)(@@) % كأن مالك داء أنت ضامنه % % فما يصحك إلا علة النشب % 28(@)(@@) % لو كان ينصفك العافون لاحتشموا % % بعض السؤال فكفوا أيسر الطلب % 29(@)(@@) % يا بدر عوف وعوف الشمس في أسد % و أسد شامة بيضاء في العرب % 30(@)(@@) % أنتم أولو البأس والنعماء طارفة % أخباركم وعلى تلد من الحقب % PageV01P034 31(@)(@@) % أحلى القديم حديثا جاهليتكم % و قص أسلافكم من رتبة الكتب % 32(@)(@@) % ما كنتم مذ جلا الإسلام صفحته % إلا سيوف نبي أو وصى نبي % % 33(@)(@@) % بكم بصفين سد الدين مسكنه % و آل حرب له تحتال في الحرب % 34(@)(@@) % و قام بالبصرة الايمان منتصبا % و الكفر في ضبة جاث على الركب % % 35(@)(@@) % حتى تقيلتها إرثا وأفضل ما % % نقلت دينك شرعا عن أب قأب % 36(@)(@@) % إذا رأيت نجيبا صح مذهبه % فاقطع بخير على أبنائه النجب % 37(@)(@@) % لا ضاع بل لم يضع يوم انتصرت به % % و أنت كالورد والأعداء كالقرب % 38(@)(@@) % و قد أتوك برايات مكررة % لم تدر قبلك ما اسم الفر والهرب % 39(@)(@@) % تمشي بهم ضمر أدمى روادفها % % غرور فرسانها بالفارس الذرب % 40(@)(@@) % لما دعوت عليا بينهم ضمنت % لك الولاية فيهم ساعد العطب % PageV01P035 41(@)(@@) % حكت رؤس القنا فيه رؤسهم % حتى تموهت الأعناق بالعذب % 42(@)(@@) % و طامع في معاليك ارتقى فهوى % % و هل يصح مكان الرأس للذنب % % 43(@)(@@) % ما كان أحوج فضلا تم فيك إلى % % عيب بعوذه من أعين النوب % 44(@)(@@) % أحببتكم وبعيد بين دوحتنا % % فكنت بالحب منكم أي مقترب % 45(@)(@@) % و ود سلمان أعطاه قرابته % يوما ولم تغن قربى عن أبي لهب % 46(@)(@@) % و رفع الصون إلا عن مناقبكم % % أسباب مدحي في شعري وفي خطبي % % 47(@)(@@) % فما تراني أبواب الملوك مع ال % % زحام فيها على الأموال والرتب % 48(@)(@@) % قناعة رغبت بي عن زيارة مس % % دول الستور وعن تأميل محتجب % 49(@)(@@) % و لي عوائد جود منك لو طرقت % % تستام ملكك لم تحرم ولم تخب % 50(@)(@@) % ملأت بالشكر قلب الحافظ الغزل ال % % فؤاد منها 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms12# وأذن السامع الطرب % PageV01P036 51(@)(@@) % فرأى جودك في أمثالها لفتى % % أتاك بالحرمتين الدين والأدب % 52(@)(@@) % و من توسل في أمر فما سبب % إليك أوكد في الأمرين من سببي % % PageV01P037 البحر : - 1(@)(@@) % رعى الله في الحاجات كل نجيب % سميع على بعد الدعاء مجيب % 2(@)(@@) % و طهر فتيانا من الذم طهروا % % غيوبهم أن تنتحى بعيوب % 3(@)(@@) % سواء على عسرى ويسرى وفاؤهم % % و ألسنهم في مشهدي ومغيبي % % 4(@)(@@) % أحبوا المعالي وهي منصبة لهم % % فما قنعوا من وصلها بنصيب % 5(@)(@@) % لجارهم من دارهم مثل ما لهم % % على راحة من عيشهم ولغوب % 6(@)(@@) % إذا جئتهم مستصرخا ثار مجدهم % % بكل مجيب في الخطوب مهيب % 7(@)(@@) % و كرم عيشي عندهم وأعاده % % بما فاض من حسن عليه وطيب % 8(@)(@@) % تعيرني ليلى الوفاء بعهدهم % % على بعدهم أنبت غير منيب % 9(@)(@@) % خلقت رقيق القلب صعبا تقلبي % % أرى لبعيد ما أرى لقريب % 10(@)(@@) % و ما زلت أهوى كل شيء ألفته % % و صاحبته حتى ألفت مشيبي % % PageV01P038 11(@)(@@) % و تنكر أضفاري كأن لم تر الصبا % % سقى و رقى يوما وهز قضيبي % % 12(@)(@@) % و لم ألقى أشراكا فأثنى حبالها % % على ما اشتهت من أعين وقلوب % 13(@)(@@) % فما زال ممسي الزمان ومصبحي % % بأسماله حتى استرد قشيبي % % 14(@)(@@) % فداء بني عبد الرحيم وودهم % % هوى كل ممذوق الوداد مريب % 15(@)(@@) % و لا برحت تسقي الحسين وعرضه % بملآن من فيض الثناء سكوب % 16(@)(@@) % مجلجلة الأرجاء صادق برقها % % حلوب لماء الشعر غير خلوب % 17(@)(@@) % مرتها رياح الشكر حتى تلاحمت % بما نسجتها من صبا وجنوب % 18(@)(@@) % فصابت فعمت ما سقته فأخصبت % على أنها لم تسق غير خصيب % 19(@)(@@) % و جازاه ملكا في الجزاء فضيلة % و أدى ثواب الشكر حق مثيب % 20(@)(@@) % أخى وأخى الموروث غير موافق % و مولاي وابن العم غير نسيب % PageV01P039 21(@)(@@) % ضمير على حكم اللسان وبعضهم % % أخو ملق يبلى أخوه بذيب % 22(@)(@@) % و عن حفظ غيب الملك نصحا إذا طغى % % به غل أسرار وعين غيوب % 23(@)(@@) % فكم غمة عمياء أعضل داؤها % % رماها برأي من نهاه طبيب % 24(@)(@@) % و شاهدة بالفخر أوفت صفاتها % % على كل معنى في الجمال عجيب % 25(@)(@@) % أتت شرفا من سيد وكأنها % % أتت من محب تحفة لحبيب % 26(@)(@@) % صفت وضفت حتى استطالت جنوبها % % بواف ومدت باعها 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms13# برحيب % 27(@)(@@) % و نيطت بأخرى مثلها فتظاهرا % % على ظهر طود في قميص قضيب % 28(@)(@@) % و منحولة جسم الهواء نحيلة % كأن الهوى فيها رمى بمصيب % % 29(@)(@@) % من الريح لولا أن يذبل تحتها % % وقارك مرت عنك مر هبوب % 30(@)(@@) % إذا دق مسا وقعها جل رفعها % % إلى منصب في القريتين حسيب % PageV01P040 31(@)(@@) % و ذي شيبتين استوقف الصبح والدجى % % على ناصل من لونه وخضيب % 32(@)(@@) % كأن السحاب جونها وبياضها % % تفرع من صاف به ومشوب % 33(@)(@@) % تشبثت الأبصار حتى تمكنت % و قد كر من هاد له وسبيب % 34(@)(@@) % توقى الأذى من عرفه بخميلة % و حك الحصى من ذيله بعسيب % 35(@)(@@) % و أعجبه في ردفه ووشاحه % % ملابس تكسو منه كل سليب % 36(@)(@@) % نصيب من الدنيا أتاك ففز به % % و لا تنس من فضل العطاء نصيبي % % 37(@)(@@) % كفى المهرجان مذكرا وذريعة % إلى محسن في المكرمات مطيب % 38(@)(@@) % بقاؤك ألفا مثله في كفالتي % % دعوت ومن الله فيك مجيبي % % 39(@)(@@) % فما زال فيكم كل خير طلبته % % قضى لي في دراكه وعنى بي % % PageV01P041 البحر : - 1(@)(@@) % أستنجد الصبر فيكم وهو مغلوب % و أسأل النوم عنكم وهو مسلوب % 2(@)(@@) % و أبتغي عندكم قلبا سمحت به % % و كيف يرجع شيء وهو موهوب % 3(@)(@@) % ما كنت أعرف ما مقدار وصلكم % حتى هجرتم وبعض الهجر تأديب % 4(@)(@@) % أستودع الله في أبياتكم قمرا % تراه بالشوق عيني وهو محجوب % 5(@)(@@) % أرضى وأسخط أو أرضى تلونه % % و كل ما يفعل المحبوب محبوب % 6(@)(@@) % أما وواشيه مردود بلا ظفر % و هل يجاب وبذل النفس مطلوب % 7(@)(@@) % لو كان ينصف ما قال انتظر صلة % تأتي غدا وانتظار السيء تعذيب % 8(@)(@@) % و كان في الحب إسعاد ومنعطف % منه كما فيه تعنيف وتأنيب % 9(@)(@@) % يا للواتي بغضن الشيب وهو إلى % % خدودهن من الألوان منسوب % 10(@)(@@) % تأبى البياض وتأبى أن أسوده % % بصبغة وكلا اللونين غربيب % PageV01P042 11(@)(@@) % ما أنكرت أمس منه ناصلا يققا % ما تنكر اليوم منه وهو مخضوب % 12(@)(@@) % ليت الهوى صان قلبي عن مطامعه % % فلم يكن قط يستدنيه مرغوب % 13(@)(@@) % إني لأسغب زهدا والثرى عمم % نبتا وأظما وغرب الغيث مسكوب % 14(@)(@@) % و لا أرق لحرص صاحبه % سعيا ويعلم أن الرزق مكسوب % 15(@)(@@) % عقبى الطماعة في مال يمن به % % عصارة لا 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms14# يغطى خبثها الطيب % 16(@)(@@) % طهر خلالك من خل تعاب به % % و اسلم وحيدا فما في الناس مصحوب % 17(@)(@@) % إني بليت بمضطر رفيقهم % و الماء يملح وقتا وهو مشروب % 18(@)(@@) % كم يوعد الدهر آمالي ويخلفها % % أخا أسر به والدهر عرقوب % 19(@)(@@) % أسعى لمثل سجايا في أبي حسن % و هل يبلغني الجوزاء تقريب % 20(@)(@@) % فدى محمد المنسي نائله % مراجع نيله المنزور محسوب % PageV01P043 21(@)(@@) % حال تحدثه الأحلام جاهلة % لحاقه وأخو الأحلام مكذوب % 22(@)(@@) % إن قدم الحظ قوما غالطا بهم % أو بينتهم عنايات وتقريب % 23(@)(@@) % فالسيف يخبر قطعا وهو مدخر % و الطرف يكرم طبعا وهو مجنوب % 24(@)(@@) % حذار من حدث النعماء مؤتنف % علاؤه بشفيع الوجه مجلوب % 25(@)(@@) % تسوءه سائلا من أين سؤدده % % إن اللئيم بما قد ساد مسبوب % 26(@)(@@) % أأنت أنت وفي الدنيا أبو حسن % صدقت إن لفي الدنيا أعاجيب % 27(@)(@@) % إذا رأيت ذيول السرح آمنة % لم يحمها فلأمر يحلم الذيب % 28(@)(@@) % يا ملبسي الشيمة الغراء ضافية % على إن قلصت عني الجلابيب % 29(@)(@@) % علقت منك بعهد لا مواثقه % تنسى ولا حبله بالغدر مقضوب % 30(@)(@@) % و أحمدتك اختباراتي وقد سبرت % غور الرجال وكدتها التجاريب % PageV01P044 31(@)(@@) % فلتجزينك عني كل غادية % لها من الكلم الفياض شؤبوب % 32(@)(@@) % إذا وسمت حياها باسمك انحدرت % له الزبى وأطاعته المصاعيب % 33(@)(@@) % فاسلم لهن ولي ما طاف مستلم % سبعا وعلق بالأستار مكروب % 34(@)(@@) % ترجى وتخشى فسيح الباب ممتنعا % إن الكريم لمرجو ومرهوب % PageV01P045 البحر : - 1(@)(@@) % أفلح قوم إذا دعوا وثبوا % % لا يرهبون الأخطار إن ركبوا % % 2(@)(@@) % تسيق نهضاتهم عزائمهم % أن تستشار العادات والعقب % 3(@)(@@) % سارون لا يسألون ما حبس ال % % فجر ولا كيف مالت الشهب % 4(@)(@@) % عودهم هجرهم مطالبة ال % % راحة أن يظفروا بما طلبوا % % 5(@)(@@) % و خاب راض بالعجز يصبر لل % % أوزار مستسلما ويحتسب % 6(@)(@@) % إن فاته حظ غيره فله % % منه اغتياب يشفيه أو عجب % 7(@)(@@) % لا تستريح العلى إلى سكن % إلا غلاما يريحه التعب % 8(@)(@@) % تضمن السير صدر حاجته % % و الثقتان التقريب والخبب % 9(@)(@@) % من مبلغ البين يوم دلهني % % آب بما سر بعدك الغيب % 10(@)(@@) % رد شبابي من الحسين كما % % كان وعادت أيامي القشب % PageV01P046 11(@)(@@) % يا قادما أتهم البشير به % % من فرح أن صدقه كذب % 12(@)(@@) % سرت ونفسي تود في وطني % % بعدك 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms15# أن المقيم مغترب % 13(@)(@@) % أحتشم البدر أن أراه فأل % % حاظى عنه بالدمع تحتجب % 14(@)(@@) % و كم تصدى عمدا ليخدعني % % يسفر عن غيهب وينتقب % 15(@)(@@) % فلم أزده على مسارقة ال % % جفن ولحظ بالكره يستلب % 16(@)(@@) % و عبرة ريه وحليته % % يشرب من مائها ويختضب % 17(@)(@@) % و يوم بين صبرت قبلك أن % % يفوتني الحزم فيه والأرب % 18(@)(@@) % حملته ثابت الحشا ذكر ال % % قلب وموج الحمول مضطرب % 19(@)(@@) % سلوان أجزى بالصد جانيه % % بملك رأسي إن أظلم الغضب % 20(@)(@@) % و نظرة حلوة رددت عن ال % % بيت وفيه الجمال والحسب % PageV01P047 21(@)(@@) % بسنة غير ما اقتضى أدب ال % % حب حفاظا وللهوى أدب % 22(@)(@@) % و انقدت طوعا في حبل ظالعة % % تجنبني أو يقال مجتنب % 23(@)(@@) % بيضاء تقلى بغضا وأعهدها % % سوداء ترضى حبا وتنتخب % 24(@)(@@) % صاحت وراء المزاح واعظة % لا يلتقي الأربعون واللعب % 25(@)(@@) % أعدى بها الشيب وهي واحدة % ألفا ويعدى الصائح الجرب % 26(@)(@@) % يا ساكنا ثائر العزيمة م % % س الصل من تحت لينه يثب % 27(@)(@@) % قد علم الملك إذ دعاك وحب % % ل الرأي واه والشمل منشعب % 28(@)(@@) % أن قلوبا غشا تميل مع ال % % دولة أهواؤها وتنقلب % 29(@)(@@) % و أن سرا متى اصطفاك له % % أخلص ما في إنائه الذهب % 30(@)(@@) % لما تجلى وجه الحذار ولي % % م ابن على غدرهة و خيف أب % PageV01P048 31(@)(@@) % رمى بك القصد سهم منجحة % يسبق حرصا حديده العقب % 32(@)(@@) % لم يثن فأل الشهور عزمته % % لا صفر عائق ولا رجب % 33(@)(@@) % جرت عليه أو مرت الريح تلق % % اها بوجه أديمه كرب % 34(@)(@@) % فليلة الحرى وهي جامدة % له كيوم الجوزاء يلتهب % 35(@)(@@) % سفرت فيها سفارة الليث لا % % يرجع إلا في كفه الطلب % 36(@)(@@) % لسعيه ما أهمه الدم وال % % لحم ولكن لغيره السلب % 37(@)(@@) % حتى استقامت على تأودها % % و انتظمت في رؤسها العذب % 38(@)(@@) % جزاك حسنى ما استطاع إن وزنت % فعلك تلك الأقدام والرتب % 39(@)(@@) % أعطاك ما لم تنل يدان ولا أم % % تد إلى مطرح المنى سبب % 40(@)(@@) % و ضافيات تطول في مذهب ال % % ملك إذا شمرت وتنسحب % PageV01P049 41(@)(@@) % أهدى من مزنة السماء لها % % ماء ومن نور شمسها لهب % 42(@)(@@) % إذا علت منكبا علا فعيو % % ن الدهر زور عن أفقع نكب % 43(@)(@@) % أوكيت رأسا منها موافيه % فكل رأس لمجده 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms16# ذنب % 44(@)(@@) % و صافنات بين المواكب كث % % بان وفي الروع ضمر قضب % 45(@)(@@) % ضاقت مكان الخصور واتسعت % أضالعا لا تقلها الأهب % 46(@)(@@) % تغيب في جريها قوائمها % % فما ترى أذرع ولا ركب % 47(@)(@@) % من كل دهماء أنسها الليل تع % % زوه إلى لونها وتنتسب % 48(@)(@@) % ثارت فطارت فخاضت الأفق ال % % علوي تجتاحه وتنتقب % 49(@)(@@) % فمن ثرياه أو مجرته % % لجامها العسجدي واللبب % 50(@)(@@) % مواهب لا يربهن أب % إلا شفيق على العلا حدب % PageV01P050 51(@)(@@) % من معشر لا يجار من طردوا % % و لا يطيب البقاء إن غضبوا % % 52(@)(@@) % مثرين مجدا ومقترين لهى % و المجد طبع والمال مكتسب % 53(@)(@@) % فرسان يوم الطعان إن طعنوا % % بالألسن المشكلات أو ضربوا % % 54(@)(@@) % لا يرجعون الكلام كرا من ال % % عي ولا يعرفون ما كتبوا % % 55(@)(@@) % دعا فؤادي شوقي إليك على ال % % بعد فلبيك والمدى كثب % 56(@)(@@) % جواب من لا يرام جانبه % منذ غدا وهو جارك الجنب % 57(@)(@@) % و لا يبالي إذا سلمت له % % ما حصدت من نباتها الحقب % 58(@)(@@) % حملت دنياي فاسترحت وقد % % طال عناء الآمال والتعب % 59(@)(@@) % و قمت مذ قادني هداك على % % محجة لا تدوسها النوب % 60(@)(@@) % فليحمدني في كل قافية % تزيد حسنا في درها الثقب % PageV01P051 61(@)(@@) % أمسحها فيك أو تقر وقد % % أوغل في أم رأسها الشغب % 62(@)(@@) % حلى من المعدن الصريح إذا % % غش تجار الأسعار ما جلبوا % % 63(@)(@@) % تشكرها الفرس في مديحك لل % % معنى وترضى لسانها العرب % 64(@)(@@) % يظهر منها السرور حاسدها % % ضرورة الحق وهو مكتئب % 65(@)(@@) % يطر به البيت وهو يحزنه % و من انين الحمامة الطرب % 66(@)(@@) % يا آل عبد الرحيم لا تزل ال % % دنيا رحى أنتم لها قطب % 67(@)(@@) % إن تفضلوا الناس والحسين لكم % % و منكم فافضلوا فلا عجب % 68(@)(@@) % فداكم خاملون لو كاثروا ال % % رمل بأعدادهم لما حسبوا % % 69(@)(@@) % لا يخلق العدل في خلائقهم % % لينا ولا يكرمون إن شربوا % % 70(@)(@@) % أخر أقدامهم وقدمكم % % أنهم يحسبون ما كتبوا % % PageV01P052 البحر : - 1(@)(@@) % قالوا رضيت قلت ما أجدى الغضب % ما غالب الدهر فتى إلا غلب % 2(@)(@@) % كيف أبالي قبح ما خيبني % % إذا علمتم كيف أجملت الطلب % 3(@)(@@) % إذا اجتهدت لم يعبني فعله % ما لم يجب وما قضيت ما وجب % 4(@)(@@) % يلومني على الهزال راتع % يحسب ما أسمنه مما اكتسب 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms17# % 5(@)(@@) % و من يرأ من بلة لالخصب درى % % أن الحظوظ منحة بلا سبب % 6(@)(@@) % لله ما أبصرني بزمني % % لو سلم المجلوم من عيب الأزب % 7(@)(@@) % جنباي للحمل وجاء لائما % % أملس لم يقمص لعضات القتب % 8(@)(@@) % جرب كما جربت في الناس تجد % أصدق ظنك الذي فيهم كذب % 9(@)(@@) % تستحفل الضرع فإن لامسته % % عاد بكيئا جلده بلا حلب % 10(@)(@@) % إنك ما استعففت أنت المجتبي % و ما ثطفت فأنت المجتنب % PageV01P053 11(@)(@@) % نذيرة فلو قبلت نصحها % % توق من تأمن واهجر من تحب % 12(@)(@@) % كم من أخ ملأت كفي به % % أحسب في الوفاء غير ما حسب % 13(@)(@@) % حملته أطوى حياء عيبه % كما حملت جلديك الجرب % 14(@)(@@) % و حاليات من جمال ونسب % نفرهن عطلى من النشب % 15(@)(@@) % بكرن إشفاقا يعبن مقعدي % % على الخمول ما لهذا لا يثب % 16(@)(@@) % نراه تحتا ونرى من تحته % % في الفضل فوقا يا لهذا من عجب % 17(@)(@@) % أما جنى خيرا له آدابه % أعاذكن الله من شر الأدب % 18(@)(@@) % هو الذي أخرني مشارف ال % % سبق فأظما شفتي على القرب % 19(@)(@@) % لا تغتررن بابن أيوب إذا % % أعجب منه بالصفايا والنخب % 20(@)(@@) % فإنه ممن ترين واحد % و ليس كل معدن عرق الذهب % PageV01P054 21(@)(@@) % يطلبه قوم وما اجتهادهم % % في حلبة مدرك رأس بذنب % 22(@)(@@) % أكل من تشجرت نسبته % صح له البطنان من خال وأب % 23(@)(@@) % و ساعدته يده ونفسه % بالفضل والبذل فساد ووهب % 24(@)(@@) % تزحزحوا فليس من أوطانكم % % للأسد الورد عن الغاب الأشب % 25(@)(@@) % و لا يروقنكم تشادق % فتحسبون كل من قال خطب % 26(@)(@@) % دعوا قنا الأقلام إن نكصتم % لحاذق الطعن إذا شاء كتب % 27(@)(@@) % من تاركي السيوف وهي زبر % شدائد أسرى لجزار القصب % 28(@)(@@) % قوم إذا نار الوغى شبت لهم % % كتائبا فلوا شباها بالكتب % 29(@)(@@) % إن شووروا لم يعجلوا أو سئلوا % % لم يقفوا تلفتا إلى العقب % 30(@)(@@) % لاظهرهم لغيبة إن ذكروا % % يوما ولا ملحهم على الركب % PageV01P055 31(@)(@@) % و قص آثارهم محمد % شهادة إن النجيب ابن النجب % 32(@)(@@) % فلا تزل نوافذ صوائب % يصمى بها الحاسد أو يرضى المحب % 33(@)(@@) % ما شكرت صنيعة أو ظهرت % مودة خالصة من الريب % 34(@)(@@) % و اختلف النيروز والعيد وما % % توافقا في بعد ولا قرب % 35(@)(@@) % تأخذ ما تشاء من حظيمها % % مقترحا محتكما 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms18# وتنتصب % 36(@)(@@) % و زائرات طيبت أعطافها % % منك بذكر لو عداك لم تطب % 37(@)(@@) % جواريا مع الرياح بالذي % % أوليت أو سواريا مع السحب % 38(@)(@@) % كل فتاة قر لي شماسها % % و ذل في فودي منها ما صعب % 39(@)(@@) % تلقاك نفسا حرة من فارس % بنت الملوك وفما من العرب % 40(@)(@@) % تروى فلو أطرب شيء نفسه % لقد سمعت من قوافيها الطرب % PageV01P056 41(@)(@@) % أضحى وراح حاسدي إن قلتها % % و حاسدوك إن علوت في تعب % PageV01P057 البحر : - 1(@)(@@) % أصبت لو أحمدت أن أصيبا % % و فزت لو كان الحجا المطلوبا % % 2(@)(@@) % و راض منى الدهر ظهرا لم يكن % % لو أنصف الحظ له مركوبا % % 3(@)(@@) % أقسم لا ازددت به فضيلة % دهري إلا زادني تعذيبا % % 4(@)(@@) % فكلما آنست منه بأذى % % بقاه واستأنف لي غريبا % % 5(@)(@@) % رميت حظي بوجوه حيلى % % فلم أصب ولم أقع قريبا % % 6(@)(@@) % تنزه يعاب أو محاسن % محسودة محسوبة ذنوبا % % 7(@)(@@) % انظر إلى الأقسام ما تأتي به % % متى أردت أن ترى عجيبا % % 8(@)(@@) % تجمع بين الماء والنار يد % و ما جمعت الرزق والأديبا % % 9(@)(@@) % ليت كفاني الدهر مع تخلصي % % مكروهه كما كفى المحبوبا % % 10(@)(@@) % أوليت أعدي خلقي جنونه % فكنت لا سمحا ولا لبيبا % % PageV01P058 11(@)(@@) % يا صاحب الزمان مغترا به % % أنت دم فاحذر عليك الذيبا % % 12(@)(@@) % تبعث ألحاظك من وفائه % % بارقة صيفية خلوبا % % 13(@)(@@) % سلني به وقس علي معه % فقد قتلت أهله تجريبا % % 14(@)(@@) % بعد عنائي واجتهادي كله % % بالأرض حتى ولدت نجيبا % % 15(@)(@@) % جاءت به بعد التراخي غلطا % ثم نوت من بعد أن تتوبا % % 16(@)(@@) % أبلج بسام العشى واضحا % % ريان مخضر الثرى رطيبا % % 17(@)(@@) % تصفو المدام وتروق ما انتمت % حسنا إلى أخلاقه وطيبا % % 18(@)(@@) % للمجد قوم وقليل ما هم % و في القليل تجد المطلوبا % % 19(@)(@@) % كالنجم للباع المديد بعده % و للعيون أن يرى قريبا % % 20(@)(@@) % لا تشكرن من فتى فضيلة % و ليس فيها معرقا نسيبا % % PageV01P059 21(@)(@@) % فإنما أعطى ابن أيوب المدى % % في الشرف اقتفاؤه أيوبا % % 22(@)(@@) % يا لابس الكمال غير معجب % تركت كل لابس سليبا % % 23(@)(@@) % إن غادر الشكر لسانا ناكلا % % و كان سيفا قبله مذروبا % % 24(@)(@@) % فقد عقدت لسني وقدتني % % بالطول في حباله جنيبا % % 25(@)(@@) % حسبت أعداد الحصى ولم أطق % عد الذي أوليتني محسوبا % % 26(@)(@@) % في كل يوم شارق معونة 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms19# % تبرد حر جوره المشبوبا % % 27(@)(@@) % و نعمة تسير في نضوحها % % خرق الجديب فيرى خصيبا % % 28(@)(@@) % يخجلني استقبالها فتحسب ال % % عين ابتسامي نحوها قطوبا % % 29(@)(@@) % لو شئت لاسترحت من أثقالها % % إن كنت من مكرمة متعوبا % % 30(@)(@@) % كنت أخا فلم تزل تسبغني % % باللطف حتى خلتني حبيبا % % PageV01P060 31(@)(@@) % فإن قضى الثناء حق نعمة % أو كاد أن يقضيها تقريبا % % 32(@)(@@) % و أقنع الميسور فاحبس شردا % تسأل عنها الشمأل الجنوبا % % 33(@)(@@) % يعلق بالعرض الكريم نشرها % % و هي به طائرة هبوبا % % 34(@)(@@) % إذا بنيت البيت منه ودت ال % % أسماع لو كانت له طنوبا % % 35(@)(@@) % يخلد مسموعا ويغني كلما % % عوضت مهدى عنه أو موهوبا % % 36(@)(@@) % عد السنين صومها وفطرها % % تتحف مقروءا به مكتوبا % % PageV01P061 البحر : - 1(@)(@@) % سلا دار البخيلة بالجناب % متى عريت رباك من القباب % 2(@)(@@) % و كيف تشعب الأظعان صبحا % % بدائد بين وهدك والشعاب % 3(@)(@@) % بطالعة الهلال على ضمير % و غاربة كمنقض الشهاب % 4(@)(@@) % حملن رشائقا ومبدنات % رماح الخط تنبت في الروابي % % 5(@)(@@) % و أين رضاك عن سقيا دموعي % % ربوعك من رضاك عن السحاب % 6(@)(@@) % بكيتك للفراق ونحن سفر % و عدت اليوم أبكى للإياب % 7(@)(@@) % و أمسح فيك أحشائي بكف % قريب عهدها بحشا الرباب % 8(@)(@@) % لها أرج بما أبقاه فيها ال % % تصافح بعد من ريح الخضاب % 9(@)(@@) % أمفصحة فأطمع في جواب % و كيف يجيب رسم في كتاب % 10(@)(@@) % نحلت ففي ترابك منك رسم % كما أني خيال في ثيابي % % PageV01P062 11(@)(@@) % و في الأحداج متعبة المطايا % % تلين عرائك الإبل الصعاب % 12(@)(@@) % بعيدة مسقط القرطين تقرا % % خطوط ذؤابتيها في التراب % 13(@)(@@) % تجمع في الأوسار معصماها % % و يقلق خصرها لك في الحقاب % 14(@)(@@) % تعيب على الوفاء نحول جسمي % % ألا بالغدر أجدر أن تعابى % % 15(@)(@@) % و ما بك أن نحلت سوى نصول % من السنوات أسرع في خضابي % % 16(@)(@@) % جزعت له كأن الشيب منه % % يسل عليك نصلا من قراب % % 17(@)(@@) % فما ذنبي إذا وقعت عقاب % من الأيام طار لها غرابي % % 18(@)(@@) % و قد كنت الحبيب وذا نحولي % % و هذا في العريكة حد نابي % % 19(@)(@@) % ليالي لي من الحاجات حكمى % % و ليس وسيلة بسوى شبابي % % 20(@)(@@) % ألا لله قلبك من حمول % على علات وصل واجتناب % PageV01P063 21(@)(@@) % و حبك من وفى العهد باق % على بعد يحيل 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms20# أو اقتراب % 22(@)(@@) % هوى لك في جبال أبان ثاو % و أنت على جبال عمان صابي % % 23(@)(@@) % و كان المجد أعود حين يهوى % % عليك من المهفهفة الكعاب % 24(@)(@@) % و إن وراء بحر عمان ملكا % رطيب الظل فضفاض الرحاب % 25(@)(@@) % رقيق عيشه عطر ثراه % بطراق الفضائل غير نابي % % 26(@)(@@) % متى تنزل به تنزل بواد % من المعروف مرعى الجناب % 27(@)(@@) % يدبره من الأمراء خرق % يذل لعزه غلب الرقاب % 28(@)(@@) % و في ذو المجد سباقا فوافي % يحلق عرفه والنجم كابي % % 29(@)(@@) % و قام بنفسه يسعى ففتقت % غريزة نفسه شرف النصاب % 30(@)(@@) % و بان به لعين أبيه بون % أراه الشبل أغلب ليث غاب % PageV01P064 31(@)(@@) % على زمن الحداثة لم يفته % تقدم شيبهم قدم الشباب % 32(@)(@@) % سما لمكانهم وهم شموس % فطال الطود أعناق الهضاب % 33(@)(@@) % و سيد قومه من سودوه % % بلا عصبية وبلا محابي % % 34(@)(@@) % و قدم بالفراسة وهو طفل % تحلل عنه أنشطة السخاب % 35(@)(@@) % و ما ترك الشريف على بنيه % % و هم منه تجاوزه بعاب % 36(@)(@@) % و إن كان الفتى لأبيه فرعا % فإن الغيث فرع للسحاب % 37(@)(@@) % بلوه وجربوا يوميه نعمى % % و بأسا في السكينة والوثاب % 38(@)(@@) % فما ظهروا مخاطبة بوان % و ما ظفروا مضاربة بنابي % % 39(@)(@@) % و لا عدموا به لسنا وقطعا % عمائق في الإصابة والصواب % 40(@)(@@) % لذلك جاوروا بالبحر بحرا % كلا كرميهما طاغى العباب % PageV01P065 41(@)(@@) % يقول لي الغنى ورأى قعودي % % عن السعي الممول والطلاب % 42(@)(@@) % و عفة مذهبي ظلفا وميلي % % إلى العيش المرمق وانصبابي % % 43(@)(@@) % أرى تلك في لو خاطرت مرعى % يبدل صحة أهب الجراب % 44(@)(@@) % أما لك في بحار عمان مال % يسد مفاقر الحاج الصعاب % 45(@)(@@) % و مولى يوسع الحرمات رعيا % و يعمر دارس الأمل الخراب % 46(@)(@@) % لعل مؤيد السلطان تحنو % % عواطف فضله بعد اجتناب % 47(@)(@@) % قفلت ودونه متلاطمات % زواخرهن كالأسد الغضاب % 48(@)(@@) % صواعد كالجبال إذا أحست % نسيما أو نوازل كالجوابي % % 49(@)(@@) % و أخضر لا يروق العين يطوى % % على بيضاء سوداء الإهاب % 50(@)(@@) % تجاذبه الأزمة من حديد % فيقمص أو يقطر في الجذاب % PageV01P066 51(@)(@@) % إذا خوض الركاب شكون ظمأ % شكى ركبانها شرق الركاب % 52(@)(@@) % يروع حداء أحبشها النواتي % % إذا شاقتك حادية العراب % 53(@)(@@) % إذا عثرت فليس تقال ذنبا % % و إن صدعت فليست لانشعاب % 54(@)(@@) % و لست بسابح 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms21# فأقول أنجو % % عسى إن ظهرها يوما كبابي % % 55(@)(@@) % إذا حلمت بها في النوم عيني % % طفقت أجس هل رطبت ثيابي % % 56(@)(@@) % و ما لي والخطار وقد سقتني % % سماء يديه من غير اغتراب % 57(@)(@@) % و جاءتني مواهبه بعيدا % % بأفضل ما يجيء مع اقتراب % 58(@)(@@) % رغائب من يديه فاجأتني % % وفين رضا بآمالي الرغاب % 59(@)(@@) % و زدن على حساب مناي لكن % % وشاح لم يكن لي في حسابي % % 60(@)(@@) % ندى وصل السماح به ولكن % % تولى عنه حاجبه حجابي % % PageV01P067 61(@)(@@) % أمرت بها كعرضك لم يدنس % بلا غش يشوب ولا ارتياب % 62(@)(@@) % من الذهب الصريح فصار مما % % يبدل في يديه إلى الذهاب % 63(@)(@@) % و قاسمني مناصفة عليه % % و جاحدني ليحبسه كتابي % % 64(@)(@@) % و قال ولم يهبك ولم يصني % كذلك فيك منذ سنين دابي % % 65(@)(@@) % إذا حملت رفدا أو كتابا % إليك لواه نهى واغتصابي % % 66(@)(@@) % مكارم سقتهن إلى محب % ففاز بها مغير لم يحاب % 67(@)(@@) % بعثت بها الخؤن فضاع سرب % أمنت عليه غائرة الذئاب % 68(@)(@@) % و لولا أن خدمته وقته % و حرمة عز بابك والجناب % 69(@)(@@) % لما سلم البعوض على عقاب % % و لا عض الهزبر بشر ناب % 70(@)(@@) % أدل بكم فأفحمني وكانت % % نواحيه مآكل للسباب % PageV01P068 71(@)(@@) % فجل عن الهجاء بذاك عندي % % و قل بما أتاه عن العتاب % 72(@)(@@) % سلبت نداك في ناديك ظلما % % بغارة صاحب لك في الصحاب % 73(@)(@@) % ثلاث سنين حولا بعد حول % بكف وشاح مقتسم نهابي % % 74(@)(@@) % و أنت خفير مالك أو يؤدي % % إلي ولو بمنقطع التراب % 75(@)(@@) % إذا أنصفتني فعليك دينا % % غرامة ما تجمع في الحساب % 76(@)(@@) % أعد نظرا فكم أغنيت فقرا % به وجبرت كسرا من مصاب % 77(@)(@@) % و كم نوديت يا بحر العطايا % % فجاء البحر بالعجب العجاب % 78(@)(@@) % وفت فيك المنى وقضت نذورى % % فوف علاك حقي ترضها بي % % 79(@)(@@) % و في يدك الغنى فابعث أمينا % % إلي به وصيره جوابي % % 80(@)(@@) % و لا تحوج ظماي إلى قليب % سواك على مقامي وانقلابي % % PageV01P069 81(@)(@@) % أذكرك الذي ما كنت تنسى % % سفوري تحت ظلك وانتقابي % % 82(@)(@@) % و إني إن بلغت النجم يوما % لكان إلى صنيعتك انتسابي % % PageV01P070 البحر : - 1(@)(@@) % من بسلع مطلع لي % % قمرا طال مغيبه % 2(@)(@@) % و أصلا بالحمى نغ % % ص بالعاذل طيبه % 3(@)(@@) % كل شيء حسن حا % % شالك فالعين 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms22# تصيبه % 4(@)(@@) % عنفوا القلب على قا % % تله وهو حبيبه % 5(@)(@@) % كل جرم لك إلا ال % % غدر فالقلب وهو به % 6(@)(@@) % و أقل الناس ذنبا % قادر عدت ذنوبه % PageV01P071 البحر : - 1(@)(@@) % هوى لي وأهواء النفوس ضروب % تجانب قوسي أن تهب جنوب % 2(@)(@@) % يدل عليها الريف أين مكانه % و يخبرها بالمزن كيف يصوب % 3(@)(@@) % و نمشى على روض الحمى ثم نلتقي % % فيبلغني منها الغداة هبوب % 4(@)(@@) % أماني بعيد لو رآها لسرها % % مكان الحيا من مقلتيه غروب % 5(@)(@@) % و دمع إذا غالطت عنه تشاهدت % قوارف في خدي له وندوب % 6(@)(@@) % على أن ذكرا لا تزال سهامه % ترى مقتى من مهجتي فتصيب % 7(@)(@@) % إذا قيل مي لم يرعني بحلمه % % حياء ولم يحبس بكاي رقيب % 8(@)(@@) % أعير المنادى باسمها السمع كله % % على علمه أني بذاك مريب % 9(@)(@@) % و كم لي في ليل الحمى من إصاخة % إلى خبر الأحلام وهو كذوب % 10(@)(@@) % توقر منها ثم تسفه أضلعي % % و يجمد فيها الدمع ثم يذوب % PageV01P072 11(@)(@@) % و ما حب مي غير برد طويته % على الكره طي الرث وهو قشيب % 12(@)(@@) % رأت شعرات غير البين لونها % % فأمست بما تطريه أمس تعيب % 13(@)(@@) % أساءك أن قالوا أخ لك شائب % فأسوأ منه أن يقال خضيب % 14(@)(@@) % و من عجب أن البياض ولونه % % اليك بغيض وهو منك حبيب % 15(@)(@@) % أحين عسا غصني طرحت حبائلي % % إلي فهلا ذاك وهو رطيب % 16(@)(@@) % يظنينه من كبرة فرط ما انحنى % % كأن ليس في هذا الزمان خطوب % 17(@)(@@) % فعدى سنيه إنما العهد بالصبا % % و إن خانه صبغ العذار قريب % 18(@)(@@) % و في خطل الرمح انحناء وإنما % % تعد أنابيب له وكعوب % 19(@)(@@) % همومي من قبل اكتهالي تكهل % و غدرك من قبل المشيب مشيب % 20(@)(@@) % و ما كان وجه يوقد الهم تحته % % لتنكر فيه شيبة وشحوب % PageV01P073 21(@)(@@) % لو أن دمي حالت صبيغة لونه % مبيضة ما قلت ذاك عجيب % 22(@)(@@) % ألم تعلمي أن الليالي جحافل % و أن مداراة الزمان حروب % 23(@)(@@) % و أن النفوس العارفات بلية % و حمل السجايا العاليات لغوب % 24(@)(@@) % يسيغ الفتى أيامه وهو جاهل % و يغتص بالساعات وهو لبيب % 25(@)(@@) % و بعض مودات الرجال عقارب % لها تحت ظلماء العقوق دبيب % 26(@)(@@) % تواصوا على حب النفاق ودينه % بأن 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms23# يتنافى مشهد ومغيب % 27(@)(@@) % فما أكثر الإخوان بل ما أقلهم % % على نائبات الدهر حين تنوب % 28(@)(@@) % و قبل ابن عبد الله ما خلت أنه % % يرى في بني الدنيا الولود نجيب % 29(@)(@@) % ألا إن المجد يخلص طينه % و كل الذي فوق التراب مشوب % 30(@)(@@) % سقى الله نفسا مذ رعت قلة العلا % % فكل مراعيها أعم خصيب % PageV01P074 31(@)(@@) % و حيا على رغم الغزالة غرة % إذا طلعت لم تدج حين تغيب % 32(@)(@@) % و حصن صدرا قلب أحمد تحته % % يضيق ذراع الدهر وهو رحيب % 33(@)(@@) % من القوم بسامون والجو عابس % و راضون واليوم الأصم غضوب % 34(@)(@@) % رأوا بابنهم ليث الشرى وهو سارب % لحاجته والبحر وهو وهوب % 35(@)(@@) % فتى سودته نفسه قبل خطه % % و شابت علاه وهو بعد ربيب % 36(@)(@@) % و قدمه أن يعلق الناس عقبه % سماح مع الريح العصوف ذهوب % 37(@)(@@) % و رأي على ظهر العواقب طالع % إذا أخطأ المقدار فهو مصيب % 38(@)(@@) % إذا ظن أمرا فاليقين وراءه % % و يصدق ظن تارة ويحوب % 39(@)(@@) % و خلق كريم لم يرضه مؤدب % تمطق فوه الثدي وهو أديب % 40(@)(@@) % تحمل أعباء الرياسة ناهضا % % بها قاعدا والحادثات وثوب % PageV01P075 41(@)(@@) % و صاحت به الجلى لسد فروجها % % فأقدم فيها والزمان هيوب % 42(@)(@@) % و كم عجمته النائبات فردها % % ردادا وعاد النبع وهو صليب % 43(@)(@@) % هناك اتفاق الناس أنك واحد % إذا كان للبدر المنير ضريب % 44(@)(@@) % و أعجب ما في الجود أنك سالب % به كل ذي فضل وأنت سليب % 45(@)(@@) % أأنسى لك النعمى التي تركت فمي % % يصعد يبغي شكرها ويصوب % 46(@)(@@) % ملكت فؤادي عند أول نظرة % كما صاد عذريا أغن ربيب % 47(@)(@@) % و كنت أخاف البابلي وسحره % و لم أدر أن الواسطي خلوب % 48(@)(@@) % و غناك أقوام بوصف مناقبي % % فرنح نشوان وحن طروب % 49(@)(@@) % رفعت منار الفخر لي بزيارة % و سمت بها مغناي وهو جديب % 50(@)(@@) % و كنت لداء جئتني منه عائدا % شفاء وبعض العائدين طبيب % PageV01P076 51(@)(@@) % و أنهلتني من خلقك العذب شربة % حلت لي وما كل الدواء يطيب % 52(@)(@@) % و لما جلا لي حسن وجهك بشره % تبين في وجه السقام قطوب % 53(@)(@@) % أجبت وقد ناديت غيرك شاكيا % % و ذو المجد يدعى غيره فيجيب % 54(@)(@@) % فطنت لها أكرومة نام غفلة % من 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms24# الناس عنها مائق وأريب % 55(@)(@@) % ذهبت بها في الفضل ذكرا بصوته % % سبقت فلم يقدر عليك طلوب % 56(@)(@@) % لئن كان في قسم المكارم شطرها % % فللدين فيه والولاء نصيب % 57(@)(@@) % و إن أك من كسرى وأنت لغيره % % فإني في حب الوصي نسيب % 58(@)(@@) % ستعلم أن الصنع ليس بضائع % علي ولا الغرس الزكي يخيب % 59(@)(@@) % و تحمد مني ما سعيت لكسبه % و ما كل ساع في العلاء كسوب % 60(@)(@@) % و مهما يثبك الشعر شكرا مخلدا % % عليها فإن الله قبل يثيب % PageV01P077 61(@)(@@) % و تسمع في نادي الندى أي فقرة % يقوم بها في الوافدين خطيب % 62(@)(@@) % متى امتد بي عمر وطالت مودة % فربعك حسن من ثناي وطيب % 63(@)(@@) % و دونك مني ضيغم فوه فاغر % متى مادنا من سرح عرضك ذيب % 64(@)(@@) % محاسن قوم وسمة في جباههم % % و لي حسنات سرهن غيوب % 65(@)(@@) % و ما الحسن ما تثنى به العين وحدها % % و لكن ما تثنى عليه قلوب % 66(@)(@@) % لقد علقت دنياك مذ قيضتك لي % % و راح عليها الحلم وهو غريب % 67(@)(@@) % أظن زماني إن زجرت صروفه % سيرجع عما ساءني ويتوب % 68(@)(@@) % تخاتلني الأخبار أخلب برقها % % بأنك يا بدر الكمال تغيب % 69(@)(@@) % فأمسك قبل البين أحشاء موجع % % لها بين أثناء الحذار وجيب % 70(@)(@@) % بأي فؤاد أحمل البعد والهوى % % جديد وذا وجدي وأنت قريب % PageV01P078 71(@)(@@) % فلا تصدع الأيام شمل محاسن % تسافر مصحوبا بها وتؤوب % 72(@)(@@) % و لا تعدم الدنيا بقاءك وحده % % فإنك في هذا الزمان غريب % PageV01P079 البحر : - 1(@)(@@) % إذا عم صحراء الغمير جدوبها % % كفى دار هند أن جفني يصوبها % % 2(@)(@@) % وقفت بها والطرف مما توحشت % طريد رباها والفؤاد جذبيها % % 3(@)(@@) % و قد درست إلا نشايا عواصف % من الريح لم يفطن لهن هبوبها % % 4(@)(@@) % خليلي هذي دار أنسى وربما % % يبين بمشهود الأمور غيوبها % % 5(@)(@@) % قفا نتطوع للوفاء بوقفة % لعل المجازي بالوفاء يثيبها % % 6(@)(@@) % فلا دار إلا أدمع ووكيفها % % و لا هند إلا أضلع ووجيبها % % 7(@)(@@) % و عيرتماني زفرة خف وقدها % % مليا وعينا أمس جفت غروبها % % 8(@)(@@) % فإن تك نفسي أمس في سلوة جنت % فقد رجع اليوم الهوى يستتيبها % % 9(@)(@@) % و إن يفن يوم البين جمة أدمعي % % فعند جفوني للديار نصيبها % % 10(@)(@@) % تكلفني هند إذا التحت ظامئا % % أماني 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms25# لم تنهز لري ذنوبها % % PageV01P080 11(@)(@@) % و أطلب أقصى ودها أن أناله % غلابا وقد أعي الرجال غلوبها % % 12(@)(@@) % بمنعطف الجزعين لمياء لو دعت % بمدين رهبانا صبت وصليبها % % 13(@)(@@) % إذا نهض الجارات أبطأ دعصها % % بنهضتها حتى يخ قضيبها % % 14(@)(@@) % تبسم عن بيض صوداع في الدجى % % رقاق ثناياها عذاب غروبها % % 15(@)(@@) % إذا عادت المسواك كان تحية % كأن الذي مس المساويك طيبها % % 16(@)(@@) % و كم دون هند رضت من ظهر ليلة % أشد من الأخطار فيها ركوبها % % 17(@)(@@) % فنادمتها والخوف تروي عظامها ال % % مدام ويروي بالبكاء شريبها % % 18(@)(@@) % إذا شربت كأسا سقتني بمثلها % % من الدمع حتى غاض دمعي وكوبها % % 19(@)(@@) % حمى الله بالوادي وجوها كواسيا % % إذا أوجه لم يكس حسنا سليبها % % 20(@)(@@) % بوادي ود الحاضرون لو أنها % % مواقع ما ألقت عليه طنوبها % % PageV01P081 21(@)(@@) % إذا وصف الحسن البياض تطلعت % سواهم يفدي بالبياض شحوبها % % 22(@)(@@) % و لله نفس من نهاها عذولها % % و من صونها يوم العذيب رقيبها % % 23(@)(@@) % لكل محب يوم يظفر ريبة % فسل خلواتي هل رأت ما يريبها % % 24(@)(@@) % إذا اختلطت لذات حب بعاره % فأنعمها عندي الذي لا أصيبها % % 25(@)(@@) % و ساء الغواني اليوم إخلاق لمتى % % فهل كان مما سرهن فشيبها % % 26(@)(@@) % سواء عليها كثها ونسيلها % % و ناصلها من عفتي وخضيبها % % 27(@)(@@) % و تعجب أن حصت قوادم مفرقي % % و أكثر أفعال الزمان عجيبها % % 28(@)(@@) % و من لم تغيره الليالي بعده % طوال سنيها غيرته خطوبها % % 29(@)(@@) % إذا سل سيف الدهر والمرء حاسر % فأهون ما يلقي الرؤس مشيبها % % 30(@)(@@) % يعدد أقوام ذنوب زمانهم % % فمن لي بأيام تعد ذنوبها % % PageV01P082 31(@)(@@) % يقولون دار الناس ترطب أكفهم % % و من ذا يداري صخرة ويذيبها % % 32(@)(@@) % و ما أطمعتني أوجه بابتسامها % % فيؤيسني مما لديها قطوبها % % 33(@)(@@) % و في الأرض أوراق الغنى لو جذبتها % % لرف على أيدي النوال رطيبها % % 34(@)(@@) % إذا إبلي أمست تماطل رعيها % % فهل ينفعني من بلاد خصيبها % % 35(@)(@@) % عذيري من باغ يود لنفسه % نزاهة أخلاقي ويمسي يعيبها % % 36(@)(@@) % إذا قصرت عني خطاه أدب لي % % عقارب كيد غير جلدي نسيبها % % 37(@)(@@) % و من أملي في سيد الوزراء لي % % مطاعم يغني عن سواها كسوبها % % 38(@)(@@) % إذا ما حمى مؤيد الملك حوزة % من الصم يقدر عليها طلوبها % % 39(@)(@@) % علي ضواف من سوالف طوله 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms26# % يجرر أذيال السحاب سحوبها % % 40(@)(@@) % و عذراء عندي من نداه وثيب % إذا جليت زان العقود تريبها % % PageV01P083 41(@)(@@) % عوارف تأتي هذه إثر هذه % % كما رافدت أعلى القناة كعوبها % % 42(@)(@@) % إذا عدد المجد انبرين فوائتا % % عقود البنان أن يعد حسيبها % % 43(@)(@@) % حلفت بمستن البطاح وما حوت % أسابيعها من منسك وحصيبها % % 44(@)(@@) % و بالبدن مهداة تقاد رقابها % % موقفة أو واجبات جنوبها % % 45(@)(@@) % لقام إلى الدنيا فقام بأمرها % % على فترة جلد الحصا وصليبها % % 46(@)(@@) % و غيران لا يرضيه إصلاح جسمه % % بدار إذا كان الفساد يشوبها % % 47(@)(@@) % وقاها من الأطماع حتى لو أنه % % جرى الدم فوق الأرض ما شم ذيبها % % 48(@)(@@) % و مد عليها حاميا يد مشبل % له عصبة بعد النذير وثوبها % % 49(@)(@@) % يد كل ريح تمتري ماء مزنها % % فما ضرها ألا تهب جنوبها % % 50(@)(@@) % أرى شبهه الأيام عادت بصيرة % و مذنبها قد جاء وهو منيبها % % PageV01P084 51(@)(@@) % و ذلت فأعطاها يد الصفح ماجد % إذا سيل تراك الذحول وهوبها % % 52(@)(@@) % لك الله راعي دولة ريع سرحها % % و راح أمام الطاردين عزيبها % % 53(@)(@@) % طوت حسنها والماء تحت شفاهها % % غراثا وأدنى الأرض منها عشيبها % % 54(@)(@@) % إذا ما تراغت تقتضي نصر ربها % % فليس سوى أصدائها ما يجيبها % % 55(@)(@@) % و قد غلب الطالين عر جلودها % % و فاتت أكف الملحمين نقوبها % % 56(@)(@@) % لها كل يوم ناشد غير واحد % تقفي المنى آثارها فيخيبها % % 57(@)(@@) % و مطلع يقلي طريق خلاصها % % فيمعي عليه سهلها وحزيبها % % 58(@)(@@) % نفضت وفاض الرأي حتى انتقدتها % % و ما كل آراء الرجال مصيبها % % 59(@)(@@) % محملة من ثقل منك أوسقا % ينوء بها مركوبها وجنيبها % % 60(@)(@@) % فعطفا عليها الآن تصف حياضها % % و تقبل مراعيها وتدمل ندوبها % % PageV01P085 61(@)(@@) % فما رأمت أبواءها عند مالك % سواك ولا حنت لغيرك نيبها % % 62(@)(@@) % تسربل بأثواب الوزارة إنها % % لك انتصحت أردانها وجيوبها % % 63(@)(@@) % و قد طالما منيتها الوصل معرضا % و باعدتها من حيث أنت قريبها % % 64(@)(@@) % و من يك مولاها الغريب وجارها % % فأنت أخوها دنية ونسيبها % % 65(@)(@@) % بلطفك في التدبير شاب غلامها % % على السيرة المثلى وشب ربيبها % % 66(@)(@@) % و قد ضامها قبل الولاة وقصرت % قبائلها عن نصرها وشعوبها % % 67(@)(@@) % فداك وقد كانوا فداءك منهم % جبان يد التدبير فينا غريبها % % 68(@)(@@) % رمى بك في صدر الأمور ولم يخف 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms27# % فلول ينوب الليث من يستنيبها % % 69(@)(@@) % حملت له الأثقال والأرض تحته % % و راعيته لما علته جنوبها % % 70(@)(@@) % و آخر أرخى للنعيم عنانه % أخو الهزل ممراح العشايا لعوبها % % PageV01P086 71(@)(@@) % تزحرفت الدنيا فصبا لها % % مقارضة يخشى غدا ما ينوبها % % 72(@)(@@) % و كان فتى أيامه وابن لينها % % و أنت أبوها المتقي ومهيبها % % 73(@)(@@) % و قاس كأن الجمر فلذة كبده % % يرى بالدماء نحلة يستذيبها % % 74(@)(@@) % مخوف نواحي الخلق عجم طباعه % إذا عولجت مر اللحاظ مريبها % % 75(@)(@@) % إذا هم في أمر بعاجل فتكة % على غرار لم يلتفت ما عقيبها % % 76(@)(@@) % و ذو لوثة مناه سلطان رأيه % % منى غره محداجها وكذوبها % % 77(@)(@@) % و لم يك ذا خير فشاور شره % و ما الشر إلا أرض تيه يجوبها % % 78(@)(@@) % يواثب من ظهر الوزارة ريضا % زلوقا وقد أعيا الرجال ركوبها % % 79(@)(@@) % و مد بكف العنف فضل عنانها % % فعادت له أفعى حدادا نيوبها % % 80(@)(@@) % رمى الناس عن قوس وأعجب من رمى % % يد أرسلت سهما فعاد يصيبها % % PageV01P087 81(@)(@@) % توق خطا لم تدر أين عثارها % % فكم قدم تسعى إلى ما يعيبها % % 82(@)(@@) % و لا تحسبن كل السحاب مطيرة % فحاصبها من حيث يرجى صبيبها % % 83(@)(@@) % و كم أصرمت تحت العصائب لقحة % و درت لغير العاصبين حلوبها % % 84(@)(@@) % أبى الله أن يشقي بك الله أمة % أردت بها سقما وأنت طبيبها % % 85(@)(@@) % تطأطأ لمن قمت نالك جالسا % % فما كل أولاد الظنون نجيبها % % 86(@)(@@) % فقد دانت الدنيا لرب محاسن % محاسن قوم آخرين عيوبها % % 87(@)(@@) % فيا ناظما عقد الكلام تمله % % و يا ناشر النعماء حياك طيبها % % 88(@)(@@) % إذا الأنفس اختصت بحب فضيلة % سموت بنفس كل فضل حبيبها % % 89(@)(@@) % توافق فيك الناس حبا وأمطرت % بشكرك سحب القول حتى خلوبها % % 90(@)(@@) % ملكت مكان الود من كل مهجة % كأنك لطفا في النفوس قلوبها % % PageV01P088 91(@)(@@) % إذا الشمس لم تطلع علينا وأمرنا % % بكفك معقود فدام مغيبها % % 92(@)(@@) % أنا العبد أعطتك الكرامة رقه % و جاءت به عفوا اليك ضروبها % % 93(@)(@@) % رفعت بأوصافي طريفا وتالدا % كواكب لي عم البلاد ثقوبها % % 94(@)(@@) % و ميزتني حتى ملكت بوحدتي % % نواصي هذا القول يضفو سبيبها % % 95(@)(@@) % و كم أمل أسلفت نفسي ودعوة % قنطت لها والله فيك مجيبها % % 96(@)(@@) % بلغت الأماني فيك فابلغ بي التي % % تنفس نفسا 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms28# ملء صدري كروبها % % 97(@)(@@) % و للدهر في حالي جروح وإنه % % بلحظك إن لاحظت يوسي رغيبها % % 98(@)(@@) % و مهما تعر من نعمة فجزاؤها % % على الله ثم الشعر عن يثيبها % % 99(@)(@@) % بكل شرود يقطع الريح شوطها % % و يسري أمام الغاسقات دبوبها % % 100(@)(@@) % تزم لي الأصوات يوم بلاغها % % إذا ما علا أعواد شعر خطيبها % % PageV01P089 101(@)(@@) % يروقك منها جزلها وحميسها % % إذا راق من أبيات أخرى نسيبها % % 102(@)(@@) % ترى الناس خلفي يلقطون بديدها % % و يعجبهم من غير كد غصوبها % % 103(@)(@@) % جواهر لي تصديفها من بحورها % % صحاحا وللعادي المغير ثقوبها % % 104(@)(@@) % يمر بها لا بائعا يستحلها % % بملك ولا مستوهبا يستطيبها % % 105(@)(@@) % بقيت لها مستخدما حبراتها % % و منتقدا ما حرها وجليبها % % 106(@)(@@) % موسعة أيام ملكك معوزا % على الحادثات أن يضيق رحيبها % % 107(@)(@@) % و أعداك من شمس النهار خلوها % % و إشراقها لكن عداك غروبها % % PageV01P090 البحر : - 1(@)(@@) % قضى دين سعدي طيفها المتأوب % و نول إلا ما أبى المتحوب % 2(@)(@@) % سرى فأراناها على عهد ساعة % و من دونها عرض الغوير فغرب % 3(@)(@@) % فمثلها لا عطفها متشمس % و لا مسها تحت الكرى متصعب % 4(@)(@@) % تحيي نشاوى من سرى الليل ألصقوا % % جنوبا بجلد الأرض ما تتقلب % 5(@)(@@) % إذا أنسوا بالليل جاذب هامهم % % حوافر قطع الليل والنوم أطيب % 6(@)(@@) % و في الترب مما استصحب الطيف فعمة % يرواح قلبي نشرها المتغرب % 7(@)(@@) % فعرفني بين الركاب كأنما % % حقيبة رحلى باقي الليل مسحب % 8(@)(@@) % ألا ربما أعطتك صادقة المنى % % مصادفة الأحلام من حيث تكذب % 9(@)(@@) % و يوم كظل السيف طال قصيره % على حاجة من جانب الرمل تطلب % 10(@)(@@) % بعثت لها الوجناء تقفو طريقها % % أمام المطايا تستقيم وتنكب % PageV01P091 11(@)(@@) % فمالت على حكم الصبا لمحجر % و للسير في أخرى مظن ومحسب % 12(@)(@@) % أعد نظرا واستأن يا طرف ربما % % تكون لالتي تهوى التي تتجنب % 13(@)(@@) % فما كل دار أقفرت دارة الحمى % % و لا كل بيضاء الترائب زينب % 14(@)(@@) % عجبت لقلبي كيف يستقبل الهوى % % و يرجو شباب الحي والرأس أشيب % 15(@)(@@) % تضم حبال الوصل من أم سالم % و حبلك بعد الأربعين مقضب % 16(@)(@@) % و ليس لسوداء اللحاظ ولو دنا % % بها سبب في أبيض الرأس مطرب % 17(@)(@@) % و لائمة في الحظ تحسب إنه % % بفضل احتيال المرء والعسي يجلب % 18(@)(@@) % رأت 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms29# شعثا غطى عليه تصوني % % و عيشا بغيضا وهو عندي محبب % 19(@)(@@) % و قد كنت ذا مال مع الليل سارح % على لو أن المال بالفضل يكسب % 20(@)(@@) % و لكنه بالعرض يشرى خياره % % و ينمي على قدر السؤال ويخصب % PageV01P092 21(@)(@@) % و ما ماء وجهي لي إذا ما تركته % يراق على ذل الطلاب وينضب % 22(@)(@@) % و إنك لا تدرين واليوم حاضر % بحال اختلالي وما غدا لي مغيب % 23(@)(@@) % لعل بعيدا ما طلت دونه المنى % % سيحكم تاج الملك فيه فيقرب % 24(@)(@@) % فما فوقه مرمى لظن موسع % و لا عنه للحق المضيع مذهب % 25(@)(@@) % و إن فاتني من جوده واصطفائه % إلى اليوم ما تسنى يداه ويوهب % 26(@)(@@) % و أيبس ربعي وحده من سحابة % تبيت لمثلى من عطاياه تسكب % 27(@)(@@) % فرجلي كانت دون ذاك قصيرة % و حظي فيما جازني منه مذنب % 28(@)(@@) % و لا لوم أن لم يأتني البحر إنما % % على قدر ما أسعى إلى البحر أشرب % 29(@)(@@) % حمى بيضة الإسلام ليث تناذرت % ذئاب الأعادي الطلس عما يذبب % 30(@)(@@) % و زانت جبين المك درة تاجه % فما ضره أي العمائم يسلب % PageV01P093 31(@)(@@) % و في بالمعالي مستقلا بحملها % % متين إذا خارت قوى العزم صلب % 32(@)(@@) % تريه خفيات الشوا كل فكرة % بصير بها من خطفة النجم أثقب % 33(@)(@@) % إذا استقبل الأمر البطيء برأيه % % تبين من أولاه ما يتعقب % 34(@)(@@) % و مزلقة المتنين تمنع سرجها % % و تسأل قوس اللجم من أين تصحب % 35(@)(@@) % أبت أن يطيف الرائضون بجنبها % % فقودتها مملوكة الظهر تركب % 36(@)(@@) % و يوم بلون المشرفية أبيض % و لكنه مما يفجر أصهب % 37(@)(@@) % إذا أسفرت ساعاته تحت نقعه % عن الموت ظلت شمسه تنتقب % 38(@)(@@) % صبرت له نفسا حبيبا بقاؤها % % إلى المجد حتى جئت بالنصر يجنب % 39(@)(@@) % كواسط والأنبار أمس كواسط % و من إيما يوميك لا أتعجب % 40(@)(@@) % و كم دولة شاخت وأنت لها أخ % و أخرى تربيها وأنت لها أب % PageV01P094 41(@)(@@) % ينام عزيزا كهلها وغلامها % % و أنت عليها المشبل المتحدب % 42(@)(@@) % أرى الوزراء الدارجين تطلبوا % % على فضلهم ما نلته فتخيبوا % % 43(@)(@@) % تباطوا عن الأمر الذي قمت آخذا % % بأعجازه واستعبدوا ما تقرب % 44(@)(@@) % فلو لحقت أيامهم بك خلتهم % % بهديك ساروا أو عليك تأدبوا % % 45(@)(@@) % نهيت الذي جاراك 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms30# راكب بغيه % إلى حينه والبغي للحين مركب % 46(@)(@@) % و قلت تفلل إنما أنت حابل % على جنبك الواهي تحش وتحطب % 47(@)(@@) % دع الرأس واقنع بالوسيطة ناجيا % بنفسك إن الرأس بالتاج أنسب % 48(@)(@@) % و إن ولي الأمر دونك ناهض ال % % بصيرة طب بالخطوب مدرب % 49(@)(@@) % و أهيب فينا من قطوبك بشره % و ما كل وجه كالح يتهيب % 50(@)(@@) % بفعلك سد إن الأسامي معارة % و بالنفس فاخر لا بمن قمت تنسب % PageV01P095 51(@)(@@) % تمنوك تاج الملك أن يتعلقوا % % غبارك وابن الريح في السبق أنجب % 52(@)(@@) % فظنوا تكاليف الوزارة سهلة % و منكب رضوى في العريكة يصعب % 53(@)(@@) % فلا زلت تلقى النصر حيث طلبته % % بجدك يعلو أو بسيفك يضرب % 54(@)(@@) % تمد لك الدنيا مطاها ذليلة % فتركب منها ما تشاء وتركب % 55(@)(@@) % إلى أن ترى ظهر البسيطة قبضة % بكفيك يلقى مشرقا منه مغرب % 56(@)(@@) % و قيض لي من حسن رأيك ساعة % يساعف فيها حظي المتجنب % 57(@)(@@) % فتمطرني من عدل جودك ديمة % تبل ثرى حالي بما أنا مجدب % 58(@)(@@) % لعل خفيا كامنا من محاسني % % تبوح به نعماك عني وتعرب % 59(@)(@@) % و من لي لو أني على العجز ماثل % بناديك يصغى المفحمون وأخطب % 60(@)(@@) % فتشهد أني ما عدمت فضيلة % إلى مثلكم مثلي بها يتقرب % PageV01P096 61(@)(@@) % و تعلم مني كيف أمدح ناظما % % فإنك تدري ناثرا كيف أكتب % PageV01P097 البحر : - 1(@)(@@) % نعم هذه يا دهر أم المصائب % فلا توعدني بعدها بالنوائب % 2(@)(@@) % هتكت بها ستر التجامل بيننا % % و لم تلتفت فينا لبقيا المراقب % 3(@)(@@) % و ما زلت ترمى صفحتي بين عاصد % و منحرف حتى رميت بصائب % 4(@)(@@) % فرأيك في قودي فقد ذل مسحلي % % و شأنك في غمزي فقد لان جانبي % % 5(@)(@@) % و لا تحسبني باسطا يد دافع % و لا فاتحا من بعدها فم عاتب % 6(@)(@@) % و لا مسبغا فضفاضة أبتغي بها % % شبا طاعن من حادثاتك ضارب % 7(@)(@@) % لها كنت أستبقي الحياة وأحتمي % % و أجمع بردى من أكف الجواذب % 8(@)(@@) % و لجت رواق العز حتى اقتحمته % بلا وازع عنه ولا رد حاجب % 9(@)(@@) % و أنشبت في صماء عهدي بمتنها % % صفيق المطا زليقة يالمخالب % 10(@)(@@) % سددت طريق الفضل من كل وجهة % و ملت على العلياء من كل جانب % PageV01P098 11(@)(@@) % فلا سنن 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms31# إلا محجة تائه % و لا أمل إلا مطية خائب % 12(@)(@@) % أبعد ابن عبد الله أحظى براجع % من العيش أو آسى على إثر ذاهب % 13(@)(@@) % و أرسل طرفي رائدا في خميلة % من الناس أبغى نجعة لمطالبي % % 14(@)(@@) % و أقدح زندا واريا من هوى أخ % و أكشف عن ود خبيئة صاحب % 15(@)(@@) % و أدفع في صدر الليالي بمثله % فترجع عني داميات المناكب % 16(@)(@@) % أبى ذاك قلب عنه غير مغالط % برجم وحلم بعده غير عازب % 17(@)(@@) % و أن خروق المجد ليست لراقع % % سواه وصدع الجود ليس لشاعب % 18(@)(@@) % طوى الموت منه بردة في دروجها % % بقية أيام الكرام الأطايب % 19(@)(@@) % محبرة سدى وألحم وشيها % % صناع بحوك المكرمات الرغائب % 20(@)(@@) % كسا الله عطف الدهر حينا جمالها % % فلما طغى قيضت لها يد سالب % PageV01P099 21(@)(@@) % لئن درست منها الخطوط فإنه % % ليبقى طويلا عرفها في المساحب % 22(@)(@@) % و جوهرة في الناس كانت يتيمة % و هل من أخ للبدر بين الكواكب % 23(@)(@@) % أبى الحسن أن يحبى بها عقد ناظم % فتسلك أو يسمولها تاج عاصب % 24(@)(@@) % فمدت إليها بالردى يد كاسر % و كان يقيها المجد من يد ثاقب % 25(@)(@@) % سل الموت هل أودعته من ضغينة % تنقم منها فهو بالوتر طالبي % % 26(@)(@@) % له كل يوم حول سرحي غارة % يشرد فيها بالصفايا النجائب % 27(@)(@@) % سلافة إخواني وصفوة إخوتي % % و نخبة أحبابي وجل قرائبي % % 28(@)(@@) % فليت عفا عن أحمد فاديا له % % بمصرمة مما اقتنيت وحالب % 29(@)(@@) % أألآن لما اشتد متني بوده % % و ردت ملاء من نداه حقائبي % % 30(@)(@@) % و جمت لآمالي العطاش حياضه % و كانت تخلى عن نطاف المشارب % PageV01P100 31(@)(@@) % فجعت به غض الهوى حاضر الجدي % % جديد قميص الود سهل المجاذب % % 32(@)(@@) % كأني على العهد القريب اعتلقته % بطول اختباري أو قديم تجاربي % % 33(@)(@@) % سددت فم الناعي بكفي تطيرا % % و لويت وجهي عنه لي مغاضب % 34(@)(@@) % و قلت تبين ما تقول لعلها % % تكون كتلك الطائرات الكواذب % 35(@)(@@) % فكم غام من أخباره ثم أقشعت % سحابته عن صالح الحال ثائب % 36(@)(@@) % فلما بدا لي السر في كر قوله % % ربطت نوازي أضلعي بالرواجب % 37(@)(@@) % و ملت إلى ظل من الصبر قالص % قصير وظن بالتجمل كاذب % 38(@)(@@) % و نفس شعاع قد أخل وقارها % % بعادته في 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms32# النازلات الصعائب % 39(@)(@@) % و عين هفا الحزن الغريب بجفنها % % فطاح ضياعا في الدموع الغرائب % 40(@)(@@) % أسائل عنه المجد وهو معطل % سؤال الأجب عن سنام وغارب % % PageV01P101 41(@)(@@) % و أستروح الأخبار وهي تسوءني % % علائق منها في ذيول الجنائب % 42(@)(@@) % فيفصح لي ما كان عنه مجمجما % و يصدقني ما كان عنه مواربي % % 43(@)(@@) % فقيد بميسان استوت في افتقاده % % مشارق آفاق العلا بالمغارب % 44(@)(@@) % و قيد الحياء والسماح فأرجلا % % عقيرين في ترب له متراكب % 45(@)(@@) % تنافث عن جمر الغضا نادباته % كأن فؤادي في حلوق النوادب % 46(@)(@@) % بكت أدمعا بيضا ودمت جباهها % % فتحسبها تبكي دما بالحواجب % 47(@)(@@) % هوت هضبة المجد التليد وعطلت % رسوم الندى وانقض نجم الكواكب % 48(@)(@@) % وردت ركاب المخمسين بظمئها % % تكد الدلاء في ركايا نواضب % 49(@)(@@) % و من يستبل المسنتون بسيبه % فيرجع خضرا بالسنيين الأشاهب % 50(@)(@@) % و مولى كشفت الضيم عنه وقد هوى % % به الذل في عمياء ذات غياهب % PageV01P102 51(@)(@@) % فلما رآك استشعر النصف واستوت % به رجله في واضح متلاحب % 52(@)(@@) % و فيمن يصاغ الشعر بعدك ناظما % % عقود الثناء حاظيا بالمناقب . % 53(@)(@@) % و أين أخوك الجود من كف راغب % إذا لم تكن قسام تلك الرغائب % 54(@)(@@) % و من ذا يعي صوتي ويعتد نصرتي % % جهادا وودي من وشيج المناسب % 55(@)(@@) % برغمي أن هب النيام وأنني % % دعوتك وجه الصبح غير مجاوب % 56(@)(@@) % و أن لا ترى مستعرضا حاج رفقة % و لا سائلا من أين مقدم راكب % 57(@)(@@) % و كنت إذا ما الدهر شل معاطني % % دعوتك فاستنفذت منه سلائبي % % 58(@)(@@) % ذخيرة أنسى يوم يوحشني أخي % % و بابي إذا سدت على مذاهبي % % 59(@)(@@) % و كم من أخ بر وإن أنا لم أجد % كأنت أخا في أسرتي والأجانب % 60(@)(@@) % سرى الموت من أوطانه في مآلفي % % و نقب من أخلافه عن حبائبي % % PageV01P103 61(@)(@@) % عجبت لهذي الأرض كيف تلمنا % % لتصدعنا والأرض أم العجائب % 62(@)(@@) % نطارد عن أرواحنا برماحنا % % و نطرب من أيامنا للحرائب % 63(@)(@@) % و تسحرنا الدنيا بشبعة طاعم % هي السقم المردى ونهلة شارب % 64(@)(@@) % أحدث نفسي خاليا بخلودها % % فأين أبي الأدنى وأين أقاربي % % 65(@)(@@) % و لا كنت إلا واحدا من عشيرة % و لا باقيا في الناس إلا ابن ذاهب % % 66(@)(@@) % فهل أنا أجبي من مقاول حمير % و 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms33# أمنع ظهرا من مشيد مارب % 67(@)(@@) % و هل أخذت عهد السموءل لي يد % من الموت أو عندي حنية حاجب % 68(@)(@@) % أرد شفارا عن نحور صحابة % كأني دفاع لها عن ترائبي % % 69(@)(@@) % و لا علم لي من أي شقي مصرعي % % و في أيما أرض يخط لجانبي % % 70(@)(@@) % إذا كان سهم الموت لا بد واقعا % % فيا ليتني المرمى من قبل صاحبي % % PageV01P104 71(@)(@@) % و يا ليت مقبورا بكوفان شاهد % جواي وإن كانت شهادة غائب % 72(@)(@@) % و ليت بساط الأرض بيني وبينه % % طوته على الأعضاد أيدي الركائب % 73(@)(@@) % فعجبت عليه واقفا فمسلما % % و إن هو يفقه حديث المخاطب % 74(@)(@@) % و ليت طريف الود بيني وبينه % % و إن طاب يوما لم يكن من مكاسبي % % 75(@)(@@) % سلام على الأفراح بعدك إنها % % و إن عشت ليست إربة من مآربي % % 76(@)(@@) % إذا دنس الحزن السلو غسلته % فعاد جديدا بالدموع السواكب % 77(@)(@@) % و إن أحدثت عندي يد الدهر نعمة % ذكرتك فيها فاغتدت من مصائبي % % 78(@)(@@) % أداري عيون الشامتين تجلدا % % و أبسم منهم في الوجوه القواطب % 79(@)(@@) % أريهم بأني ثابت الريش ناهض % و تحت جناحي جانفات المخالب % 80(@)(@@) % سقتك بمعتاد الدموع مرشة % أفاويق لم تخدج بلمعة خالب % PageV01P105 81(@)(@@) % يلوث خطاف البرق في جنباتها % % بهام الهضاب السود حمر العصائب % 82(@)(@@) % لها فوق متن الأرض وهي رفيقة % بما صافحت وخد القروم المصاعب % 83(@)(@@) % ترى كل ترب كان يعتاض لينا % لها وغلاما كل أشمط شائب % 84(@)(@@) % إذا عممت جلحاء أرض بوبلها % % غدت روضة وفراء ذات ذوائب % 85(@)(@@) % و إن كان بحر في ضريحك غانيا % % بجماته عن قاطرات السحائب % PageV01P106 البحر : - 1(@)(@@) % تزل الليالي مرة وتصيب % و يعزب حلم الدهر ثم يثوب % 2(@)(@@) % و تستلقح الآمال بعد حيالها % % أوانا وينأى الحظ ثم يؤوب % 3(@)(@@) % و لولا قفول الشمس بعد أفوالها % % هوت معها الأرواح حين تغيب % 4(@)(@@) % تنظر وإن ضاقت بصدر رحابه % فروج صلاح ذرعهن رحيب % 5(@)(@@) % فما كل عين خالجتك مريضة % و خطفة برق خالستك خلوب % 6(@)(@@) % قضت ظلمات البعد فيك قضاءها % % فصبحا فهذا الفجر منك قريب % 7(@)(@@) % بدت أوجه الأيام غرا ضواحكا % % و كن وفي استبشارهن قطوب % 8(@)(@@) % و طارحنني عذر البريء وربما % % سبقن وفي أعذارهن ذنوب % 9(@)(@@) % أرى كبدى قد أثلجت 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms34# في ضلوعها % % و كانت على جمر الفراق تذوب % 10(@)(@@) % و راحت إليها بعد طول التياحها % % صبا قرة تندى لها وتطيب % PageV01P107 11(@)(@@) % سرى الفضل من ميسان يشرق بعدما % % أطال دجى الزوراء منه غروب % 12(@)(@@) % و هبت رياح الجود بشرى بقربه % لها سالف من نشرها وجنيب % 13(@)(@@) % و ما خلت أن البدر يطلع مصعدا % % و لا أن ريح المكرمات جنوب % 14(@)(@@) % تزاحمت الأيام قبل لقائه % % بجنبي من ذنب الفراق تتوب % 15(@)(@@) % و تفسم لي أيمان صدق بأن غدا % تراه وبعض المقسمين كذوب % 16(@)(@@) % و قد زادني شكرا لحسن وفائها % % بما وعدت أن الوفاء غريب % 17(@)(@@) % كفى البين أني لنت تحت عراكه % و خرت وعودي في الخطوب صليب % 18(@)(@@) % و قاربت من خطوى رضا بقضائه % و لي بين أحداث الزمان وثوب % 19(@)(@@) % حملت وسوق البعد فوق أضالع % % من الثقل عضات بها وندوب % 20(@)(@@) % أخب حذار الشامتين تجلدا % % بهن وما تحت الخبال نجيب % PageV01P108 21(@)(@@) % فإن تعقب الأيام حسنى تسوءها % % فللصبر أخرى حلوة وعقيب % 22(@)(@@) % سمت أعين مغضوضة وتراجعت % إلى أنسها بعد النفور قلوب % 23(@)(@@) % و عادت تسر الرائدين خميلة % تعاورها بعد الحسين جدوب % 24(@)(@@) % فماء الندى عذب اللصاب مرقرق % و غصن المنى وحف النبات رطيب % 25(@)(@@) % سيلقى عصاه وادعا كل خابط % على الرزق يطوى أرضه ويجوب % 26(@)(@@) % و هل ينفض الجو العريض لنجعة % أريب وأوديه أعم خصيب % 27(@)(@@) % أقول لآمالي وهن رواقد % خذي أهبة اليقظان حان هبوب % 28(@)(@@) % إذا الصاحب استقبلت غرة وجهه % بدا قمر واف وماس قضيب % 29(@)(@@) % و لم تفتحي الأجفان عن طرف لافت % إلى نائبات الدهر حين تنوب % 30(@)(@@) % سلام وحيا الله والمجد سنة % لها في دجنات الظلام ثقوب % PageV01P109 31(@)(@@) % و زادت علاء في الزمان وبسطة % يد تصرم الأنواء وهي حلوب % % 32(@)(@@) % لآثارها في كل شهباء روضة % و في كل عمياء المياه قليب % 33(@)(@@) % حمى مجده وافي الحمائل سيفه % غيور إذا ما المجد صيم غضوب % 34(@)(@@) % له كل يوم نهضة دون عرضه % إذا نام حبا للبقاء حسيب % 35(@)(@@) % قليلة أنس الجفن بالغمض عينه % و للعار مسرى نحوه ودبيب % 36(@)(@@) % إذا سال وادي اللؤم حلت بيوته % بأرعن لا ترقى إليه عيوب % 37(@)(@@) % و قام بأمر الملك يحسم داءه % بصير بأدواء 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms35# الزمان طبيب % 38(@)(@@) % له مدد من سيفه ولسانه % قؤول إذا ضاق المجال ضروب % 39(@)(@@) % إذا يبست أقلامه أو تصامتت % فصارمه رطب اللسان خطيب % 40(@)(@@) % يرى كل يوم لابسا دم قارن % له جسد فوق التراب سليب % PageV01P110 41(@)(@@) % و لم أر مثل السيف عريان كاسيا % و لا أمرد الخدين وهو خضيب % 42(@)(@@) % و قد جربوه عاطلا ومقلدا % % و قادوه يعصى حبله ويجيب % 43(@)(@@) % فما وجدوا مع طول ما اجتهدوا له % % فتى عنه في جلى تنوب ينوب % 44(@)(@@) % فعادوا فعاذوا ناهضين بعاجز % حضورهم ما أخروه مغيب % 45(@)(@@) % أمين على ما ضيعوا من حقوقه % % سليم وود الغادرين مشوب % 46(@)(@@) % من البيض إلا أن يحلى وجوههم % % إذا هجروا خلف التراب شحوب % 47(@)(@@) % صباح نجوم العز فوق جباههم % % طوالع غر والنجوم تغيب % 48(@)(@@) % عصائب تيجان الملوك سماتهم % % و يومهم تحت الرماح عصيب % 49(@)(@@) % إذا حيز بيت الفخر حلق منهم % عليه شباب طيبون وشيب % 50(@)(@@) % لهم كل مقرور عن الحلم ظنه % يقين وهافى عزمتيه لبيب % PageV01P111 51(@)(@@) % تغيض أكف الواجدين وكفه % على العدم تهمى مرة وتصوب % 52(@)(@@) % تكاد من الإشراق جلدة خده % تغص بماء البشر وهو مهيب % 53(@)(@@) % يقيك الردى غمر يجاريك في الندى % % فيعقل عي رسغه ولغوب % 54(@)(@@) % إذا قمت في النادي بريئا من الخنا % % تلفت من جنبيه وهو مريب % 55(@)(@@) % تتبع يقفو الخير منك بشره % خداعا كما قص المشمة ذيب % 56(@)(@@) % تنبه مشروفا بغلطة دهره % و بنت بمجد أنت فيه نسيب % 57(@)(@@) % و قد ينهض الحظ الفتى وهو عاجز % لحاجاته حتى يقال نجيب % 58(@)(@@) % أنا الحافظ الذواد عنك وبيننا % % وشائع من بسط الفلا وسهوب % 59(@)(@@) % شهرت لسانا في ودادك جرحه % إذا حز في جلد النفاق رغيب % 60(@)(@@) % لك الجمة الوطفاء من ماء غربه % و عند العدا حر له ولهيب % PageV01P112 61(@)(@@) % يسرك مكتوبا وشخصك نازح % و يرضيك مسموعا وأنت قريب % 62(@)(@@) % و كيف تروني قاعدا عن فريضة % قيامي بها حق لكم ووجوب % 63(@)(@@) % و فيكم نما غصني وطالت أراكتي % % و غودر عيشي الرث وهو قشيب % 64(@)(@@) % شوى كل سهم طاح لي في سواكم % و لي شعبة من رأيكم ونصيب % 65(@)(@@) % و لي بعد فيكم ذروة ستنالها % % يدي ومنى في قولها ستصيب % 66(@)(@@) % متى تذكروا حقي أبت 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms36# بوفائكم % % و ظهر العلى العاصي على ركوب % 67(@)(@@) % طربت وقد جاء البشير بقربكم % % و ذو الشوق عند اسم الحبيب طروب % 68(@)(@@) % و قمت إليه راشفا من ترابه % ثرى لك يحلو رشفه ويطيب % 69(@)(@@) % فلا كان يا شمس الزمان وبدره % لسعدك من بعد الطلوع مغيب % 70(@)(@@) % و لا زلت مطلوبا تفوت ومدركا % أواخر ما تبغي وأنت طلوب % PageV01P113 71(@)(@@) % كأنك من حب القلوب مصور % فأنت إلى كل النفوس حبيب % PageV01P114 البحر : - 1(@)(@@) % أعجبت بي بين نادي قومها % % أم سعد فمضت تسأل بي % % 2(@)(@@) % سرها ما علمت من خلقي % % فأرادت علمها ما حسبي % % 3(@)(@@) % لا تخالى نسبا يخفضني % % أنا من يرضيك عند النسب % 4(@)(@@) % قومي استولوا على الدهر فتى % و مشوا فوق رؤس الحقب % 5(@)(@@) % عمموا بالشمس هاماتهم % و بنوا أبياتهم بالشهب % 6(@)(@@) % و أبي كسرى على إيوانه % أين في الناس أب مثل أبي % % 7(@)(@@) % سورة الملك القدامى وعلى % % شرف الإسلام لي والأدب % 8(@)(@@) % قد قبست المجد من خير أب % و قبست الدين من خير نبي % % 9(@)(@@) % و ضممت الفخر من أطرافه % سودد الفرس ودين العرب % % PageV01P115 البحر : - 1(@)(@@) % أجدك بعد أن ضم الكثيب % هل الأطلال إن سئلت تجيب % 2(@)(@@) % و هل عهد اللوى بزورد يطفى % % أوامك إنه عهد قريب . % 3(@)(@@) % أعد نظرا فلا خنساء جار % و لا ذو الأثل منك ولا الجنوب % 4(@)(@@) % إذا وطن عن الأحباب عزى % % فلا دار بنجد ولا حبيب % % 5(@)(@@) % يمانية تلوذ بذي رعين % قبائلها المنيعة والشعوب % % 6(@)(@@) % حمتها أن أوزر نوى شطون % براكبها ورامحة شبوب % 7(@)(@@) % ململمة تضيق العين عنها % % إذا شرقت بجمتها السهوب % 8(@)(@@) % و معجلة عن الإلجام قب % أعنتها إلى الفزع السبيب % 9(@)(@@) % و إنك بالعراق وذكر حي % على صنعاء للحلم الكذوب % 10(@)(@@) % لعل البان مطلولا بنجد % و وجه البدر عن هند ينوب % PageV01P116 11(@)(@@) % ألا يا صاحبي تطلعا لي % % أشى هل اكتسى الأيك السليب % 12(@)(@@) % و هل في الشرب من سقيا فإني % % أرى في الشعب أفئدة تلوب % 13(@)(@@) % أكفكف بالحمى نزوات عيني % % و قد غصت بأدمعها الغروب % 14(@)(@@) % و أحلم والمطايا يقتضيها % % دوين حنينها الحادي الطروب % 15(@)(@@) % فمن يجهل به أو يطغ شوق % فشوقي لا أبا لكما لبيب % 16(@)(@@) % و بيض راعهن بياض رأسي % % فكل محبب منى 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms37# معيب % 17(@)(@@) % عددن مذ التثمت به ذنوبي % % و قبل الشيب أحبطت الذنوب % 18(@)(@@) % يجد المرء لبسته ويبلي % % و آخر لبسة الرأس المشيب % 19(@)(@@) % و كنت إذا عتبت على الليالي % % و في وجهي لها لون نسيب % 20(@)(@@) % أطاع شبابها حفظا شبابي % % فجاءت من إساءتها تنيب % PageV01P117 21(@)(@@) % فما بالي أرى الأيام تنحى % % علي مع المشيب وهن شيب % 22(@)(@@) % عذيري من سحيل الود نحوى % % حقيبة رحله مرس تخيب % 23(@)(@@) % و في لي وهو محصوص وأضحى % % غداة ارتاش وهو علي ذيب % 24(@)(@@) % و محسود علي تضيق عني % % خلائقه وجانبه رحيب % 25(@)(@@) % لطيت له فغر بلين مسى % و رب كمنية ولها دبيب % 26(@)(@@) % توق عضاض مختمر أخيفت % جوانبه وفي فيه نيوب % 27(@)(@@) % فإن الصل يحذر مستميتا % و تحت قبوعه أبدا وثوب % 28(@)(@@) % و لا تثلم ودادك لي بغدر % فقد يتثلم النسب القريب % 29(@)(@@) % أنلني بعض ما يرضي فلو ما % % غضبت حماني الأنف الغضوب % 30(@)(@@) % و من هذا يرد عنان طرفي % % إليك إن استمر بي الركوب % PageV01P118 31(@)(@@) % سترمي عنك بي إبلي بعيدا % % و تنتظر الإياب فلا أؤوب % 32(@)(@@) % و ربتما أتاك بنشر صيتي % % و واسع حالي النبأ العجيب % 33(@)(@@) % أخوف بالخيانة من زماني % % و قد مرنت على القتب الندوب % 34(@)(@@) % و ما وادعته منذ احتربنا % % على سلم فتوحشني الحروب . % 35(@)(@@) % و كيف يريبني منه بيوم % زمان كله يوم مريب % 36(@)(@@) % و إني مذ غدت هممي سيوفا % % لأعلم أنني أبدا ضريب % 37(@)(@@) % و ما جنت الذي يجنيه قلبي % % على جسمي العداة ولا الخطوب % 38(@)(@@) % لئن أبصرتني رثا معاشي % % أطوف حول حظي أو أجوب % 39(@)(@@) % فتحت خصاصتي نفس عزوف % و حشو معاوزي كرم قشيب % 40(@)(@@) % سلي بيدي الطروس وعن لساني % % فوارك لا يلامسها خطيب % PageV01P119 41(@)(@@) % لها وطن المقيم بكل سمع % تمر به وسائرها غريب % 42(@)(@@) % بوالغ في مدى العلياء لو ما % % أعان ركودها يوما هبوب % 43(@)(@@) % لئن خفت على قوم ودقت % فما يدعى بها منهم مجيب % 44(@)(@@) % و نفرها رجال لم يروح % على أفهامهم منها عزيب % 45(@)(@@) % فعند مؤيد الملك اطمأنت % و ضم شعاعها المرعى الخصيب % 46(@)(@@) % فكم حق به وجد انتصافا % وظن في نداه لا يخيب % 47(@)(@@) % و واسعة الذراع يغر فيها % % عيون العيس رقاص خلوب % 48(@)(@@) % إذا استاف 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms38# الدليل بنا ثراها % % أراب شميمه الترب الغريب % 49(@)(@@) % تخفضنا وترفعنا ضلالا % كما خبت براكبها الجنوب % 50(@)(@@) % إذا غنت لنا الأرواح فيها % % تطاربت العمائم والجيوب % PageV01P120 51(@)(@@) % عمائم زانها الإخلاق ليثت % على سنن وضاءتها الشحوب % 52(@)(@@) % قطعناها إليك على يقين % بأن الحظ رائده اللغوب % 53(@)(@@) % ترى ما لا ترى الأبصار منها % % كأن عيونها فيها قلوب % 54(@)(@@) % إلى ملك مخضرة رباه % جماد الرزق من يده يذوب % 55(@)(@@) % يغيض بنا ويملح كل ماء % و ماء بنانه عد شروب % 56(@)(@@) % تناهت عنه أقدام الأعادي % % كأن رواقه الغاب الأشيب % 57(@)(@@) % إذا ركب السرير علا فأوفى % على مرباته أقنى رقوب % 58(@)(@@) % يعول الأرض ما كسبت يداه % و ما كل ابن مرقبة كسوب % 59(@)(@@) % متين قوى العزيمة ألمعي % إذا ما ارتاب بالفكر الأريب % 60(@)(@@) % يريه أمس ما في اليوم رأي % تمل على شهادته الغيوب % PageV01P121 61(@)(@@) % بذبك من وراء الملك قامت % % دعائم منه والتأمت شعوب % 62(@)(@@) % حملت له بقلبك ما تركت ال % % جبال به تفاخرها القلوب % 63(@)(@@) % تضرم فتنة وتضيق حال % و صدرك فيهما ثلج رحيب % 64(@)(@@) % و كم أشفى به داء عضال % و صنع الله فيك له طبيب % 65(@)(@@) % طلعت على البلاد وكل شمس % % تضيء قد استبد بها الغروب % 66(@)(@@) % و قد قنط الثرى وخوت أصول ال % % عضاه وصوح العشب الرطيب % 67(@)(@@) % و نار الجور عالية تلظى % % و داء العجز منتشر دبوب % 68(@)(@@) % فكنت الروض تجلبه النعامى % و ماء المزن منهمرا يصوب % 69(@)(@@) % كأنك غرة الإقبال لاحت % % بعقب اليأس والفرج القريب % 70(@)(@@) % هنا أم الوزارة أن أتاها % % على الإعقام منك ابن نجيب % PageV01P122 71(@)(@@) % و أنك سيد الوزراء معنى % به سميت والألقاب حوب % 72(@)(@@) % و لو أتت السماء بمثلك ابنا % لما كانت طوالعها تغيب % 73(@)(@@) % بك اجتمعت بدائدها ولا نت % % معاطفها ومعجمها صليب % 74(@)(@@) % فلا تتجاذب الحساد منها % % عرى يعيا يمرتها الجذيب % 75(@)(@@) % و لا يستروحوا نفحات عرف % لها بثياب غيرك لا تطيب % 76(@)(@@) % نصحت لهم لو أن النصح أجدى % % و لم يكن المشاور يستريب % 77(@)(@@) % و قلت دعوا لمالكها المعالي % % ففي أيديكم منها غصوب % 78(@)(@@) % خذوا جماته الأولى وخلوا % % أقاصي لا يخابطها ذنوب % 79(@)(@@) % فكم من شرقة بالماء تردى % % و إن كانت به تشفى الكروب % 80(@)(@@) % لك اليومان تكتب أو 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms39# تشب ال % % وغى وكلاهما يوم عصيب % PageV01P123 81(@)(@@) % فيومك جالسا قلم خطيب % و يومك راكبا سيف خضيب % 82(@)(@@) % جمعت كفاية بهما وفتكا % % و مجمع ذين في رجل عجيب % 83(@)(@@) % و ضيقة المجال لها وميض % قطار سمائه العلق الصبيب % 84(@)(@@) % وقفت له حسامك مستبيح % محارمها وعفوك مستثيب % 85(@)(@@) % و مسود اللثات له لعاب % يجد الخطب وهو به لعوب % 86(@)(@@) % يخال على الطروس شجاع رمل % إذا ما عض لم يرق اللسيب % 87(@)(@@) % تغلغل منه في مهج الأعادي % % جوائف جرحها أبدا رغيب % 88(@)(@@) % إذا ملك الرقاب به امترينا % % مضى قلم بكفك أم قضيب % 89(@)(@@) % و مضطهد طردت الدهر عنه % % و قد فغرت لتفرسه شعوب % 90(@)(@@) % إذا عصرت من الظمأ الأداوى % % على الإعياء أو ركب الجنيب % PageV01P124 91(@)(@@) % فنعم مناخ ظالعة وسقيا % ذراك الرحب أو يدك الحلوب % 92(@)(@@) % علا رخجية الأبيات خطت % على شماء ينصفها عسيب % 93(@)(@@) % لها عمد على صدر الليالي % % و فوق أوائل الدنيا طنوب % 94(@)(@@) % صفا حلب الزمان لها وقامت % % لدعوتها الممالك تستجيب % 95(@)(@@) % و ما من دولة قدمت وعزت % % و إلا ذكرها بكم يطيب % 96(@)(@@) % و منكم في سياستها رجال % فحول أو لكم فيها نصيب % 97(@)(@@) % كرام تسند الحسنات عنهم % % و تزلق عن صفاتهم العيوب % 98(@)(@@) % مضوا طلقا بأعداد المساعي % % و جئت ففت ما يحصى الحسيب % 99(@)(@@) % قناة أنت عاملها شروعا % % إلى نحر السما وهم الكعوب % 100(@)(@@) % و خير قبيلة شرفا ملوك % لمجدك منهم عرق ضروب % PageV01P125 101(@)(@@) % فلا وصح النهار ولست شمسا % % و لا أزرى بمطلعك المغيب % 102(@)(@@) % و لا برحت بك الدنيا فتاة % ترب كما اكتسى الورق القضيب % 103(@)(@@) % إذا ما حزتها انتفضت عطارا % % سوالفها بعدلك والتريب % 104(@)(@@) % و مات الدهر وانطوت الليالي % % و ملكك لا يموت ولا يشيب % 105(@)(@@) % و قام المهرجان فقال مثل ال % % ذي قلنا وآب كما نؤوب % 106(@)(@@) % و عادك زائرا ما كر ليل % لسعدك بين أنجمه ثقوب % 107(@)(@@) % بك استظللت من أيام دهري % % و من رمضائها فوقي لهيب % 108(@)(@@) % كفيتني السؤال فما أبالي % % سواك من المنوع أو الوهوب % 109(@)(@@) % و غرت على الكمال فصنت وجهي % % فليس لمائه الطامي نضوب % 110(@)(@@) % مكارم خضرت عودي وروت % ثراه وقد تعاوره الجدوب % PageV01P126 111(@)(@@) % تواصلني مثاني أو وحادا % % كما يتناصر القطر السكوب 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms40# % 112(@)(@@) % فما اشكو سوى أني بعيد % و غيري يوم ناديكم قريب % 113(@)(@@) % أفوق عزمتي شوقا اليكم % % و يقبضني الحياء فلا أصيب % 114(@)(@@) % أصد وضمن دستك لي حبيب % عليه من جلالته رقيب % 115(@)(@@) % إذا امتلأت لحاظي منك نورا % % نزا قلبي فطار به الوجيب % 116(@)(@@) % يميل إليك بشرك لحظ عيني % % و يحبس عنك مجلسك المهيب % 117(@)(@@) % و لو أني بسطت لكان سعي % وبل بلاله الشوق الغلوب % 118(@)(@@) % أبيت فما أجيب سواك داع % و لكني دعاءكم أجيب % 119(@)(@@) % فإن يكن انقباضي أمس ذنبا % % فمنذ اليوم أقلع أو أتوب % 120(@)(@@) % و تحضر نابيات عن لساني % % فواقر ربها عبد منيب % PageV01P127 121(@)(@@) % أوانس في فمي متيسرات % إذا ذعرت من الكلم السروب % 122(@)(@@) % إذا أعيت على الشعراء قيدت % إلي وظهر ريضها ركوب % 123(@)(@@) % بقيت وليس لي فيها ضريب % و لا لك في الجزاء بها ضريب % 124(@)(@@) % تصاغ لها الحماسة من معاني % % علاك ومن محاسنك النسيب % 125(@)(@@) % رعيت بهن من أملي سمينا % % لديك وحاسدي غيظا يذوب % 126(@)(@@) % و هل أظما وهذا الشعر سجل % أمد به وراحتك القليب % PageV01P128 البحر : - 1(@)(@@) % على أي أخلاق الزمان أعاتبه % و ما هو إلا صرفه ونوائبه % 2(@)(@@) % تفرى أديمي وهو بتر شفاره % و جافت جروحي وهو صم مخالبه % 3(@)(@@) % ندوب تقفي هذه عقب هذه % و داء إذا ما باخ أوقد صاحبه % 4(@)(@@) % شغلت يدي حينا بعد ذنوبه % و زدن فقد تاركته لا أحاسبه % 5(@)(@@) % طرحت سلاحي وانترعت تمائمي % % و ضاربه ينحى علي وسالبه % 6(@)(@@) % ببيض من الأيام هن سيوفه % و سود من الليلات هن عقاربه % 7(@)(@@) % أدامجه حتى يراني راضيا % % مرارا وأعصى مرة فأغاضبه % 8(@)(@@) % فلا هو إن أطريته قابض يدا % و لا خائف عارا بما أنا عائبه % 9(@)(@@) % نصحتك لا تخدع بسنة وجهه % فشاهده حسن تشوه غائبه % 10(@)(@@) % و لا تتمهد قعدة فوق ظهره % فما هو إلا ضيغم أنت راكبه % PageV01P129 11(@)(@@) % تردى رجال قبلنا وتقطرت % بهم شهبه دون المدى وشاهبه % 12(@)(@@) % و صرح عما ساءهم طول محضه % خبائث جرتها عليهم أطايبه % 13(@)(@@) % حبائل مكتوب لها نصر كيدها % % من الله لا يمحى الذي هو كاتبه % 14(@)(@@) % فمن مغلق مستعجل أو مؤخر % مراخيه يوما لا محالة جاذبه % 15(@)(@@) % تصاممت عن داعي المنون مغالطا % % و إني 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms41# على طول السكوت مجاوبه % 16(@)(@@) % و قدمت غيري جنة أتقي بها % % و من يوق من راميه لا بد صائبه % 17(@)(@@) % أخلاى أيم الله أطلب ثأركم % % من الدهر لو قد أدرك الثأر طالبه % 18(@)(@@) % أفي كل يوم لي قضيب مخالس % و ذخر نفيس منكم الموت غاصبه % 19(@)(@@) % و كاس من العلياء والحسن يعتدي % % سليما على سيفي وسوطى سالبه % 20(@)(@@) % تطيح به زندي وجهد تحفظي % % بميثاقه في الغيب أني نادبه % PageV01P130 21(@)(@@) % و كم منكم كالنجم رعت به الدجى % % زمانا خبا بعد الإضاءة ثاقبه % 22(@)(@@) % و آخر لما سامحتني بأصله ال % % منايا ذوت أغصانه وشعائبه % 23(@)(@@) % و أضحى بنوه غبطة وبناته % تسل بهم أنيابه ورواجبه % 24(@)(@@) % فينزو بلبي شجوه وتصيبني % % بموضعه من سر قلبي مصائبه % 25(@)(@@) % ألا يا أخي للود دنيا وكم أخ % لأمي بعيدات علي قرائبه % 26(@)(@@) % لحا الله خطبا شل سرحك طرده % و جمع في إلهاب قلبك حاطبه % 27(@)(@@) % رمتك يد الأيام عن قوس قارن % إذا هو والي لم تخنه صوائبه % 28(@)(@@) % سقتك بكف أدهقت لك ثانيا % % و لما يفق من أول بعد شاربه % 29(@)(@@) % فقرح وقرح لم تلاحم ندوبه % و دمع ودمع ما تعلق ساربه % 30(@)(@@) % و يا ليته لما تثنى تعلقت % مقاديره أو استوين مراتبه % PageV01P131 31(@)(@@) % و لكنها كف هوت إثر إصبع % % و حارك ظهر بعده جب غاربه % 32(@)(@@) % حصاتان من در حصانان لم تطر % يد بهما ما دنس الدر ثاقبه % 33(@)(@@) % هما بيضتا كن بجانب ملبس % حماه الطروق تيهه وسباسبه % 34(@)(@@) % حرام على الساري تضيع على القطا % % أفاحيصه في جوه ومساربه % 35(@)(@@) % يحوطهما ما استطاع وحف جناحه % شعارهما دون التراب ترائبه % 36(@)(@@) % تراه يصادى حاجب الشمس عنهما % % لو أن الردى ما أحرز الشيء هائبه % 37(@)(@@) % رزئتهما شمسين أقسم فيهما % % ظلام الأسى ألا تجلى غياهبه % 38(@)(@@) % يعدون خرقا بالفتى في بناته % إذا ما بكى أو ذل للحزن جانبه % 39(@)(@@) % و كم من كريم عزه نجباؤه % % فعز بما ساقت إليه نجائبه % 40(@)(@@) % و بعض البنات من بها ينتج العلا % % و بعض بني الإنسان في الحي عائبه % PageV01P132 41(@)(@@) % فإلا تكونا صارمين فحذوتا % % حسام عتيق لا تفل مضاربه % 42(@)(@@) % أخي الحلم لم يملك عليه حياؤه % % و لا كذبته في 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms42# الزمان تجاربه % 43(@)(@@) % إذا ولد استذكرن حزما إناثه % كما ذكرت أخلاقه وضرائبه % 44(@)(@@) % تعز ابن روح إنما الموت مدلج % إلى أمد فيه النفوس مراكبه % 45(@)(@@) % و من أخرته شمس يوم فلم يمت % % يمت حوله أحبابه وحبائبه % 46(@)(@@) % و أعجب من ذي خبرة بزمانه % % تنكر منه أن توالى عجائبه % 47(@)(@@) % خلقنا لأمر أرهقتنا صدوره % فيا ليت شعري ما تجر عواقبه % 48(@)(@@) % غريم ملط لا يمل وطالب % بغير ترات لا تنام مطالبه % 49(@)(@@) % و قد جربتك الحادثات فلا تكن % % ضعيف القوى رخوا لهن مجاذبه % 50(@)(@@) % و غيرك مغلوب على حسن صبره % و لا خطب إلا أنت بالصبر غالبه % PageV01P133 51(@)(@@) % برغمي أن يسرى غزي من الأسى % % اليك ولم تفلل بنصري كتائبه % 52(@)(@@) % و إن كان خصما لا لساني ينوشه % % و لا كلماتي الغاسقات تواقبه % 53(@)(@@) % و يا لدفاعي عنك إن كان صارما % % أصافحه أو كان ليثا أواثبه % 54(@)(@@) % و من لي لو أن الحزن يرعى جوانحي % % فدى لك لو يرضى بقلبي ناصبه % 55(@)(@@) % فما هي إلا مهجة لك شطرها % % و موهوب عيش أنت ما عشت واهبه % 56(@)(@@) % و إن كان يطفي حر لوعتك البكا % % على أنه جاريه لا بد ناضبه % 57(@)(@@) % فدونك دمعي سائلا ومعلقا % % فجامده باق عليك وذائبه % 58(@)(@@) % عتبت على دهري فسهل عذره % بأنك باق كل ما هو جالبه % 59(@)(@@) % إذا سلم البدر التمام فهين % على الليل أن تهوى صغارا كواكبه % PageV01P134 البحر : - 1(@)(@@) % هل عند عينيك على غرب % غرامة بالعرض الخلب % 2(@)(@@) % نعم . دموع يكتسى تربه % منها قميص البلد المعشب % 3(@)(@@) % ساربة تركب أردافها % % معلقات بعد لم تسرب % 4(@)(@@) % ترضى بهن الدار سقيا وإن % % قال لها نوء السماك اغضبني % % 5(@)(@@) % علامة أني لم أنتكث % مرائر العهد ولم أقضب % 6(@)(@@) % يا سائق الأظعان لا صاغرا % % عج عوجة ثم استقم واذهب % 7(@)(@@) % دع المطايا تلتفت إنها % % تلوب من جفني على مشرب % 8(@)(@@) % لا والذي إن شاء لم أعتذر % في حبه من حيث لم أذنب % 9(@)(@@) % ما حدرت ريح الصبا بعده % % لثامها عن نفس طيب % 10(@)(@@) % و لا حلا البذل ولا المنع لي % % مذهو لم يرض ولم يغضب % PageV01P135 11(@)(@@) % كم لي على البيضاء من دعوة % لولا اصطخاب الحلي لم تحجب % 12(@)(@@) % و حاجة 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms43# لولا بقياتها % % في النفس لم أطرب ولم أرغب % 13(@)(@@) % يا ماطلي بالدين ما ساءني % % إليك تريد المواعيد بي % % 14(@)(@@) % إن كنت تقضي ثم لا نلتقي % % فدم على المطل وعد واكذب % 15(@)(@@) % سال دمي يوم الحمى من يد % لولا دم العشاق لم تخضب % 16(@)(@@) % نبل رماة الحي مطرورة % أرفق بي من أعين الربرب % 17(@)(@@) % يا عاذلي قد جاءك الحزم بي % % أقاد فاركبني أو فاجنب % 18(@)(@@) % قد سد شيبي ثغري في الهوى % % فكيف قصى أثر المهرب % 19(@)(@@) % أفلح إلا قانص غادة % مد بحبل الشعر الأشيب % 20(@)(@@) % ما لبنات العشر والعشر في % % جد بني الخمسين من ملعب % PageV01P136 21(@)(@@) % شيات أفراس الهوى كلها % % تحمد فيهن سوى الأشهب % % 22(@)(@@) % أما تريني ضاويا عاريا % من ورق المتلحف المخصب % 23(@)(@@) % محتجزا أندب من أمسى ال % % ماضي أخا مات ولم يعقب % 24(@)(@@) % فلم يلثم ظبتي عاملي % % ما حطم الساحب من أكعبي % % 25(@)(@@) % يوعدني الدهر بغدراته % قعقع لغير الليث أو هبهب % 26(@)(@@) % قد غمزت كفك في مروتي % % فتحت أي الغمز لم أصلب % 27(@)(@@) % أمفزعي أنت بفوت الغنى % % تلك يدالطالي على الأجرب % 28(@)(@@) % دع ماء وجهي مالئا حوضه % % و كل سمينا نشبي واشرب % 29(@)(@@) % إن أغلب الحظ فلي عزمة % بالنفس لم تقمر ولم تغلب % 30(@)(@@) % ذم الأحاظي طالب لم يجد % فكيف وجداني ولم أطلب % PageV01P137 31(@)(@@) % آه على المال وما يجتنى % % منه لو أن المال لم يوهب % 32(@)(@@) % راخ على الدنيا إذا عاسرت % و إن أتت مسمحة فاجذب % 33(@)(@@) % و لا تعسف كد أخلافها % % فربما درت ولم تعصب % 34(@)(@@) % هذا أوان استقبلت رشدها % % بوقفة المعتذر المعتب % 35(@)(@@) % و ارتجعت ما ضل من حلمها % % من بين سرح الذائد المغرب % 36(@)(@@) % و ربما طالع وجه المنى % % من شرف اليأس ولم يحسب % 37(@)(@@) % قل لذوي الحاجات مطرودة % و ابن السبيل الضيق المذهب % 38(@)(@@) % و قاعد يأكل من لحمه % تنزها عن خبث المكسب % 39(@)(@@) % قد رفعت في بابل راية % للمجد من يلق بها يغلب % 40(@)(@@) % يصيح داعي النصر من تحتها % % يا خيل محيي الحسنات اركبي % % PageV01P138 41(@)(@@) % جاء بها الله على فترة % بأية من يرها يعجب % 42(@)(@@) % هاجمة الإقبال لم تنتظر % بواسع الظن ولم ترقب % 43(@)(@@) % لم تألف الأبصار من قبلها % % أن تطلع الشمس من المغرب % 44(@)(@@) % ردوا 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms44# فقد زاركم البحر لم % % يخض له الهول ولم يركب % 45(@)(@@) % يشف للأعين عن درة ال % % ثمين صافي مائه الأعذب % 46(@)(@@) % فارتبعوا بعد مطال الحيا % % و روضوا بعد الثرى المجدب % 47(@)(@@) % قد عاد في طيء ندى حاتم % و قام كعب سيد الأكعب % 48(@)(@@) % و عاش في غالب عمرو العلا % % يهشم في عامهم الملزب % 49(@)(@@) % و ارتجعت قحطان ما بزها % % من ذي الكلاع الدهر أو حوشب % 50(@)(@@) % ورد بيت في بني دارم % زرارة من حوله محتبى % % PageV01P139 51(@)(@@) % كل كريم أو فتى كامل % و فاعل أو قائل معرب % 52(@)(@@) % فاليوم شك السمع قد زال في % % أخباره بالمنظر الأقرب % 53(@)(@@) % إلى الوزير اعترقت نيها % % كل أمون وعرة المجذب % 54(@)(@@) % تعطي الخشاشات ليانا على % % أنف لها غضبان مستصعب % 55(@)(@@) % مجنونة الحلم وما سفهت % بالسوط خرقاء ولم تجنب % 56(@)(@@) % ييأس فحل الشول من ضربها % % لعزة النفس ولم تكتب % 57(@)(@@) % لو وطئت شوك القنا نابتا % في طرق العلياء لم تنقب % 58(@)(@@) % يخط في الأرض لها منسم % دام متى يمل السرى يكتب % 59(@)(@@) % كأن حاذيها على قارد % أحمش مسنون القرا أحقب % 60(@)(@@) % طامن في الرمل له قانص % أعجف لم يحمض ولم يرطب % PageV01P140 61(@)(@@) % ذو وفضة يشهد إخلاقها % % بأنها عامين لم تنكب % 62(@)(@@) % مهما تخلله بنياتها % % من ودج أو ورك يعطب % 63(@)(@@) % فمر لم يعطف على عانة % ذعرا ولم يرأم على تولب % 64(@)(@@) % به خدوش يتعجلنه % قدائم من لاحق الأكلب % 65(@)(@@) % بأي حس ريع خيلت له % % رنة قوس أو شبا مخلب % 66(@)(@@) % يذرع أدراج الفيافي بها % % كل غريب الهم والمطلب % 67(@)(@@) % يرمي بها ليل جمادى إلى % % يوم من الجوزاء معصوصب % 68(@)(@@) % في عرض غبراء رياحية % عجماء لم تسمر ولم تنسب % 69(@)(@@) % يشكل مشهور الركايا بها % % على مصانيف القطا اللغب % 70(@)(@@) % حتى أنيخت وصدوع السرى % % بالنوم في الأجفان لم تشعب % PageV01P141 71(@)(@@) % و شملة الظلماء مكفورة % تحت رداء القمر المذهب % 72(@)(@@) % إلى ظليل البيت رطب الثرى % % عالي الأثافي حافل المحلب % 73(@)(@@) % مختضب الجفنة ضخم القرى % % إذا يد الجازر لم تخضب % 74(@)(@@) % ترفع بالمندل نيرانه % إذا إماء الحي لم تحطب % 75(@)(@@) % له مجاويف عماق إذا % % ما القدر لم توسع ولم ترحب % 76(@)(@@) % كل ربوض عنقها بارز % مثل سنام الجمل الأنصب % 77(@)(@@) % تعجلها زحمة ضيفانه % أن 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms45# تتأنى حظب الملهب % 78(@)(@@) % أبلج في كل دجى شبهة % لو سار فيها النجم لم تثقب % 79(@)(@@) % موقر النادي ضحوك الندى % % يلقاك بالمرغب والمرهب % 80(@)(@@) % تلحظه الأبصار شزرا وإن % % أكثر من أهل ومن مرحب % PageV01P142 81(@)(@@) % مر وإن أجدتك أخلاقه % شمائل الصهباء لم تقطب % 82(@)(@@) % ينحط عنه الناس من فضلهم % % منحدر الردف عن المنكب % 83(@)(@@) % أتعبه تغليسه في العلا % % من طلب الراحة فليتعب % 84(@)(@@) % من معشر لم يهتبل عزهم % % بغلط الحظ ولم يجلب % 85(@)(@@) % و لا علا ابن منهم طالعا % % من شرف إلا وراء الأب % 86(@)(@@) % تسلقوا المجد وداسوا العلا % % و طرقها يهماء لم تلحب % 87(@)(@@) % و وافقوا الأيام فاستنزلوا % % أبطالها في مقنب مقنب % 88(@)(@@) % قوم إذا أخلف عام الحيا % % لم تختزلهم حيرة المسغب % 89(@)(@@) % أو بسط الله ربيعا لهم % % لم يبطروا في سعة المخصب % 90(@)(@@) % سموا وأصبحت سماء لهم % % يطلع منها شرف المنسب % PageV01P143 91(@)(@@) % زدت وما انحطوا ولكنها % % إضاءة البدر على الكوكب % 92(@)(@@) % خلقت في الدنيا بلا مشبه % أغرب من عنقائها المغرب % 93(@)(@@) % لا يجلس الحلم ولا يركب ال % % خوف ولم تجلس ولم تركب % 94(@)(@@) % إن جنح الأعداء للسلم أو % % تلاوذوا منك إلى مهرب % 95(@)(@@) % كتبت لو قلت فقال العدا % % أعزل لم يطعن ولم يضرب % 96(@)(@@) % أو ركبوا البغي إلى غارة % طعنت حتى قيل لم يكتب % 97(@)(@@) % فأنت ملء العين والقلب ما % % تشاء في الدست وفي الموكب % 98(@)(@@) % و رب طاو غلة بائت % من جانب الشر على مرقب % 99(@)(@@) % ينظر من أيامه دولة % بقلم الأقدار لم تكتب % 100(@)(@@) % راعته من كيدك تحت الدجى % % دبابة أدهى من العقرب % PageV01P144 101(@)(@@) % فقام عنها باذلا بسلة ال % % راقي ولم يرق ولم يسلب % 102(@)(@@) % بك اشتفى الفضل وأبناؤه % % بعد عموم السقم المنصب % 103(@)(@@) % و التقم الملك هدى نهجه % و كان يمشي مشية الأنكب % 104(@)(@@) % وزارة قلبها شوقها % % منك إلى حولها القلب % 105(@)(@@) % جاءتك لم توسع لها مرغبا % % وليها المهر ولم تخطب % 106(@)(@@) % كم أجهضت قبلك من عدهم % % لها شهور الحامل المقرب % 107(@)(@@) % و ولدت وهي كأن لم تلد % أم إذا ما هي لم تنجب % 108(@)(@@) % قمت بمعناها وكم جالس % تكفيه منها سمة المنصب % 109(@)(@@) % و هي التي إن لم يقد رأسها % % بمحصدات الصبر لم تصحب % 110(@)(@@) % مزلقة راكب سيسائها 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms46# % % راكب ظهر الأسد الأغلب % PageV01P145 111(@)(@@) % راحت على عطفك أثوابها % % طاهرة المرفع والمسحب % 112(@)(@@) % فتحت في مبهم تدبيرها % % تنفس البلجة في الغيهب % 113(@)(@@) % و ارتجعت منك رجالاتها % % كل مطيل في الندى مرغب % 114(@)(@@) % رد بنو يحيى و سهيل لها % % و الطاهريون بنو مصعب % 115(@)(@@) % فاضرب عليها بيت ثاو بها % % قبلك لم يعمد ولم يطنب % 116(@)(@@) % و استخدم الأقدار في ضبطها % % و استشر الإقبال واستصحب % 117(@)(@@) % و امدد على الدنيا وجهلاتها % % ظلال حلم لك لم يعزب % 118(@)(@@) % و اطلع على النيروز شمسا إذا % % ساق الغروب الشمس لم تغرب % 119(@)(@@) % تفضل ما كر سني عمره % بملء كف الحاسب المطنب % 120(@)(@@) % يوم من الفرس أتى وافدا % فقالت العرب له قرب % PageV01P146 121(@)(@@) % بات من الإحسان في داركم % % و هو غريب غير مستغرب % 122(@)(@@) % لو شاء من ينسب لم يعزه % لغيركم عيدا ولم ينسب % 123(@)(@@) % و اسمع لمغلوب على حظه % % لو أنك الناصر لم يغلب % 124(@)(@@) % موحد لم يشك من دهره % % و أهله إلا إلى مذنب % 125(@)(@@) % أقصاه عند الناس إدلاؤه % % من فضله بالنسب الأقرب % 126(@)(@@) % لو قيض إنصافك قدما له % % عز فلم يقص ولم يقصب % 127(@)(@@) % عندك من برقي لماعة % سابقة تشهد للغيب % 128(@)(@@) % منثورها ذاك ومنظومها % % هذا كلا الدرين لم يثقب % 129(@)(@@) % ما زلت أرجوك ومن آيتى % % أن رجائي فيك لم يكذب % 130(@)(@@) % لم يبق لي بعدك عتب على % % خظ ولا فقر إلى مطلب % PageV01P147 131(@)(@@) % فاغرس ونوه منعما واصطنع % % ترض مضاء الصارم المقضب % 132(@)(@@) % و غر على رقي من خامل % لملك مثلي غير مستوجب % 133(@)(@@) % كم أحمدت قبلك عنقي يد % لكنها سامت ولم تضرب % % 134(@)(@@) % و لدنة الأعطاف لم تعتسف % بالكلم المر ولم تتعب % 135(@)(@@) % من الحلال العفو لم تستلب % بغارة الشعر ولم تنهب % 136(@)(@@) % دم الكرى المهراق فيها على % % سامعها إن هو لم يطرب % 137(@)(@@) % جاءك معناها وألفاظها % % في الحسن بالأسهل والأصعب % 138(@)(@@) % أفصح ما قيل ولكنها % % فصاحة تهدى إلى يعرب % PageV01P148 البحر : - 1(@)(@@) % ضمانة يصدق وعد الضنا % % فيها جناها الطمع الكاذب % 2(@)(@@) % عاد بها اليوم جديد الهوى % % و قد تولى أمسها الذاهب % 3(@)(@@) % أية نار قدحت في الحشا % % عين مهاة زندها ثاقب % 4(@)(@@) % و أي ثغر ولمي صادني % % نابل قلبي بهما الصائب % 5(@)(@@) % حبا له من 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms47# برد جامد % يقطر منه ضرب ذائب % 6(@)(@@) % الله يا حسناء في مهجة % أنت بها الثائر والطالب % 7(@)(@@) % إن كنت حرمت وصالي فمن % % أين دمي حل لكم واجب % % 8(@)(@@) % سلي سهام الشوق عن أضلعي % % إن صدقت عينك والحاجب % 9(@)(@@) % من موقد النار وقد أخمدت % على فؤادي ومن الحاطب % PageV01P149 البحر : - 1(@)(@@) % يا دار لا أنهج القشيب % منك ولا صوح الرطيب % 2(@)(@@) % و لا أخلت بك الغوادي % % تشعب ما يصدع الجدوب % 3(@)(@@) % من كل مخروقة العزالي % % تغلب أخياطها الثقوب % 4(@)(@@) % تعجب منها رباك حتى % % يضحك فيها الوجه القطوب % 5(@)(@@) % و كان عطرا كما عهدنا % % مشي الصبا فيك والهبوب % 6(@)(@@) % فرب ليل ثراك فيه % % بين بحور العشاق طيب % 7(@)(@@) % عجنا وليل المطي ليل % بعد وصوت الحادي صليب % 8(@)(@@) % و ما نقضناه من طريق % من حيث رحنا عنه قريب % 9(@)(@@) % فقال صحبي أضل هاد % أم خدع الحازم الأريب % 10(@)(@@) % ليس أوان التعريس هذا % % قلت هو الشوق لا اللغوب % PageV01P150 11(@)(@@) % يا من رأى باللوى بريقا % تقدح نيرانه الجنوب % 12(@)(@@) % كلا ولا بينما تراه % يطلع أبصرته يغيب % 13(@)(@@) % كأن ما لاح منه وهنا % على شباب الدجى مشيب % 14(@)(@@) % حدثني بالغضا حديثا % % سر على أنه خلوب % 15(@)(@@) % يقول هيفاء لم يحلها % % عن عهدك الناقل الكذوب % 16(@)(@@) % جفونها بعدكم حنوا % % ماء وأحشاؤها لهيب % 17(@)(@@) % فارض فمن قلبها خفوقي % % أعدي ومن طرفها أصوب % 18(@)(@@) % لا وليال على المصلي % % تسرق في نسكها الذنوب % 19(@)(@@) % و ما رأى الجبف من هنات % يغفرها المالك الوهوب % 20(@)(@@) % و خلوات بأم سعد % ما بعدها لذة تطيب % PageV01P151 21(@)(@@) % لولا لماها لما شفاني % % بزمزم ما سقى القليب % 22(@)(@@) % ماذا على محرم بجمع % و سهمه من دمى خضيب % 23(@)(@@) % و كيف والصيد ثم بسل % تصاد بالأعين القلوب % 24(@)(@@) % يا فتكها نظرة خلاسا % % سبب أدواءها الطبيب % 25(@)(@@) % ذابت عليها حصاة قلبي % % يا من رأى جمرة تذوب % 26(@)(@@) % قل لزماني ما شئت فاضغط % % قد دبر الجابر الجليب % 27(@)(@@) % أصبتني بالخطوب حتى % % لم تبق لي مقتلا تصيب % 28(@)(@@) % في كل يوم جور غريب % عندي عليه صبر غريب % 29(@)(@@) % حتى لقد صار عجيبا % % منك الذي كله عجيب % 30(@)(@@) % و لائم في عزوف نفسي % % قلت له أنت والخطوب % PageV01P152 31(@)(@@) % عساك خبرا بالناس مثلي % % إن رد من حلمك العزيب 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms48# % 32(@)(@@) % ففي قلي من تراك تلحى % % منهم وفي ترك من تعيب % 33(@)(@@) % الله لي إن طرحت عرضي % % أكلة آمالهم حسيب % 34(@)(@@) % قد كنت أبكي وهم فروق % شتى وأشكو وهم ضروب % 35(@)(@@) % فاليوم سوتهم المساوي % % عندي وعمتهم العيوب % 36(@)(@@) % فما أرى منهم بريئا % % يخشى افتضاحا به المريب % 37(@)(@@) % بلى قد استثنت المعالي % % بيتا لها فخره نسيب % 38(@)(@@) % بيتا شموس الضحى عماد % له وشهب الدجى طنوب % 39(@)(@@) % الحسب العد من بينه % كل نجيب نمى نجيب % 40(@)(@@) % من آل عبد الرحيم مرد % حول رواق العلا وشيب % PageV01P153 41(@)(@@) % تشابهوا سوددا فأعطى % % شاهدهم فضل من يغيب % 42(@)(@@) % كل محيا الجبين طلق % لم يعتسف بشره القطوب % 43(@)(@@) % راضون أن يشبعوا ويضووا % % و العام مسحنفز غصوب % 44(@)(@@) % تروى عطاش الآمال فيهم % % و هي على غيرهم تلوب % 45(@)(@@) % لهم أفاويقها إذا ما % % أصرم ثدي الحيا الحلوب % 46(@)(@@) % دوحة مجد أبو المعالي % % غصن جناها الغض الرطيب % 47(@)(@@) % كان فتاها والرأي كهل % و طفلها والحجا لبيب % 48(@)(@@) % ليث حماها والدار حرب % و في السلام الظبي الربيب % 49(@)(@@) % لا فرحة تستقل منه % % حلما ولا نوبة تنوب % 50(@)(@@) % تغمز فيه أيدي الليالي % % و النبع مستعصم صليب % PageV01P154 51(@)(@@) % إذا كساه الغنى قميصا % % فهو بأيدي الندى سليب % 52(@)(@@) % و كل سعي له كسوب % تغرمه كفه الوهوب % 53(@)(@@) % يحمي حماه بنافذات % خدوشها في العدا ندوب % 54(@)(@@) % لا يبلغ السبر ما يفري % % معمقا جرحها الرغيب % 55(@)(@@) % يبعثها مفصحا لسان % ماض إذا لجلج الخطيب % 56(@)(@@) % إذا فروج الكلام ضاقت % تم بها باعه الرحيب % 57(@)(@@) % لا محقت بدرك الدآدي % % و لا محا شمسك الغروب % 58(@)(@@) % و رجع الدهر مستقيلا % % اليك من ذنبه ينوب % 59(@)(@@) % يقسم لا شيم وهو سيف % بعد ولا شم وهو ذيب % 60(@)(@@) % و عاد ظل الدنيا عليكم % % يورق أو ينمر القضيب % PageV01P155 61(@)(@@) % حظكم صفوها وحظ ال % % أعداء منها المر المشوب % 62(@)(@@) % ما كر عودا شباب ليل % يردفه من ضحى مشيب % 63(@)(@@) % و زار يوم النيروز عام ال % % خضب كما زارك الحبيب % 64(@)(@@) % تهدى لكم من ثناي عون % كل ابن سمع لها طروب % 65(@)(@@) % قواطن فيكم وتمسى % % تجول في الأرض أو تجوب % 66(@)(@@) % في كل يوم تغشاك منها % % حبيبة ما لها رقيب % 67(@)(@@) % كذاك لا غائبي خبيث % لكم ولا شاهدي مريب % 68(@)(@@) % قلبي 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms49# صحيح لكم وودي % % ما مرض الود والقلوب % 69(@)(@@) % أجببتكم قبل أن دعوتم % % فكيف أدعى فلا أجيب % PageV01P156 البحر : - 1(@)(@@) % لعلها واليأس منها أغلب % إن نأت اليوم غدا تستقرب % 2(@)(@@) % حاجة صدر لك لا ملفوظة % و لا تسوغ حلوة فتشرب % 3(@)(@@) % أضحك من مواعد الدهر بها % % مما يجيء باطلا ويذهب % 4(@)(@@) % و دونها أن ينتهي لجاجها % % ذو صبغتين دينه التقلب % 5(@)(@@) % في كل يوم مرسل مغالط % لي عنده وشافع محبب % 6(@)(@@) % و حلفة كاذبة وفي فمي % % شكيمة من أن أقول تكذب % 7(@)(@@) % مل فلا الحصاة من فؤاده % % تلين لي ولا اللسان يرطب % 8(@)(@@) % الله يا هيفاء لي في زمن % نعيمه بعدكم معذب % 9(@)(@@) % و كبد يصدعها كل أسى % بها الكبود القرحات تشعب % 10(@)(@@) % لا سلوة البعد المريح عصمة % منك ولا الهم المراح يعزب % PageV01P157 11(@)(@@) % و كلما أطمع فيك سبب % آمله أياس منك سبب % 12(@)(@@) % يعيش قلبي وهو عيش مؤلم % ثم يموت وهو موت طيب % 13(@)(@@) % نفسك يا معطي الهوى قياده % % إنك في خيط الهوان تجنب % 14(@)(@@) % و إن هويت فانتصر بغدرة % عن ثقة أن الوفاء العطب % 15(@)(@@) % قالت على البيضاء أخت عامر % أسفر في فوديك ذاك الغيهب % 16(@)(@@) % و من بلاياك وإن عبت به % % شباب حبي وعذاري الأشيب % 17(@)(@@) % غدرك والخمسون أي روضة % قشيبة بينهما لا تجدب % 18(@)(@@) % و ما الذي أنكرته من ليلة % يطلع فيها قمر أو كوكب % 19(@)(@@) % ما نصلت إلا بماء مقلتي % % فليتها بماء قلبي تخضب % 20(@)(@@) % و عاذل لا سقيت غلته % بالغور ما يروى ولا ما يعذب % PageV01P158 21(@)(@@) % يزعم أن كل دار رامة % و أن كل ذات حجل زينب % 22(@)(@@) % حلفت يوم ينحر الناس بها % % ساجدة أذقانها والركب % 23(@)(@@) % يعطى المنى منها الذي يستامه % طلى تطيح وجنوب تجب % 24(@)(@@) % مثل التلاع بازلا وحقة % قام عليهن الربيع المخصب % 25(@)(@@) % و المشرفات من منى كأنها % % على ظهور الهضبات حدب % 26(@)(@@) % و بالملبين سعوا فنفضوا % % ذنوبهم وجمروا وحصبوا % % 27(@)(@@) % و ما حوى وأي فضل ما حوى % % ذاك العتيق البارز المحجب % 28(@)(@@) % لو نسب المجد لما كان إلي % % غير بني عبد العزيز ينسب % 29(@)(@@) % من أرضهم طينته وفيهم % رواقه وبيته المطنب % 30(@)(@@) % أقسم لا فارقهم وأقسموا % % ما دام خلدا من أبان منكب % PageV01P159 31(@)(@@) % حي 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms50# على رغم البدور غررا % تقدح في فحم الدجى فتثقب % 32(@)(@@) % ورد نفوسا حرة وأيديا % % تحيل في المحل عليها السحب % 33(@)(@@) % تبادروا الجود فلاطوا حوضه % لهم ليالي ورده والقرب % 34(@)(@@) % و انتظموا سوددهم القنا % % لكن صدور ليس فيها أكعب % 35(@)(@@) % داسوا بأعقابهم هام العلا % % و اقتعدوا ظهورها واعتقبوا % % 36(@)(@@) % شم الأنوف والسيوف قصرت % دروعهم وهي سباغ تسحب % 37(@)(@@) % يمشون رجلي فيخال أنهم % % من شارة ومن شطاط ركبوا % % 38(@)(@@) % توارثوا الملك فلا خلافة % إلا لهم سريرها والموكب % 39(@)(@@) % و منهم في حربها وسلمها % % رمح يخط ولسان يخطب % 40(@)(@@) % حلي كل دولة عاطلة % و بشر كل نعمة تقطب % PageV01P160 41(@)(@@) % إذا الخطوب حسمت بخدعة % أو ردعة لانوا لها وصعبوا % % 42(@)(@@) % إن كتبوا قلت اصطلاما طعنوا % % أو طعنوا قلت بلاغا كتبوا % % 43(@)(@@) % ترى الجبال في الحبى إن جلسوا % % و الأسد هيج شرها إن وثبوا % % 44(@)(@@) % لهم قدامى الفخر ما تنقله % لك الرواة وتريك الكتب % 45(@)(@@) % و خير ما استطرفته حديثهم % % إذا الكرام زانهم ما أعقبوا % % 46(@)(@@) % و ولدوا أبا الحسين فرأى ال % % مجد به كيف نموا وأنجبوا % % 47(@)(@@) % برزت في عقدهم واسطة % لها من الأبصار ما يستلب % 48(@)(@@) % بيضاء مما أبغض الغواص في ال % % فحص عليها أنفسا تحبب % 49(@)(@@) % و مطلتهم دونها أمنية % رواغة وحقب وحقب % 50(@)(@@) % حتى قضى الصبر لهم قضاءه % و استحييت الأيام مما نصبوا % % PageV01P161 51(@)(@@) % فاستخرجوها تملأ الراحة وال % % عين فقالوا درة أم كوكب % 52(@)(@@) % و شرفت فلقبت فخر العلا % % لو لم يقع دون سناها اللقب % 53(@)(@@) % و كيف لا تطلع بدرا فيهم % و الشمس جد لك والنجم أب % 54(@)(@@) % ألقى الكمال طائعا عنانه % اليك يرخى تارة ويجذب % 55(@)(@@) % و أقعص الأقران عنك قلم % ممرن وخاطر مدرب % 56(@)(@@) % و قمت قرحانا فتيا بالعلا % % قيد عنك القارح المجرب % 57(@)(@@) % ورثت فضلا لو قنعت لكفي % % لكن أبيت غير ما تكتسب % 58(@)(@@) % كالليث لا تحلو له فريسة % لا ينتقي فيها ولا يخلب % 59(@)(@@) % و كم سواك لم يجز حسابه % أعداد ما تملي عليه الحسب % 60(@)(@@) % حويت إعظاما وقد مثلت لي % % رائد عيني وقلت تكذب % PageV01P162 61(@)(@@) % أدمية صيغت أم البدر هوى % % و بشر أم ملك مقرب % 62(@)(@@) % معجزة جاء الزمان غلطا % % بها وآوى كلهن عجب % 63(@)(@@) % و كرم 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms51# على اللسان حاضر % يشف منه الكرم المغيب % 64(@)(@@) % و راحة مطلقة طارحها ال % % عرض المصون أن يهون النشب % 65(@)(@@) % سحرتني ودار عزي بابل % % و قدتني وأم رأسي تصعب % 66(@)(@@) % و ملكتني لك نشوان الهوى % % خلائق غناؤهن مطرب % 67(@)(@@) % ملأت بالبشر وطاب أملي % % و بعضهم بكيئة لا تحلب % 68(@)(@@) % حتى رقى الحاوي فأصيغت له % % و كدت مع شدة زهدي أرغب % 69(@)(@@) % و قلت عاش لزهير هرم % و قام في أهل الزبير مصعب % 70(@)(@@) % أرضيتني عن الزمان بعد ما % % حرق أضلاعي عليه الغضب % PageV01P163 71(@)(@@) % و عاد بردا وسلاما بك لي % % ما توقد الدنيا وما تحتطب % 72(@)(@@) % أغنيتني قبل اللها مودة % و الود عندي خير رفد يوهب % 73(@)(@@) % و قربتني منك أولى نظرة % حتى كأنا لم نزل نصطحب % 74(@)(@@) % فراسة أيقظك المجد لها % % و فطنة على سواك تعزب % 75(@)(@@) % و همة إذا ركبت ظهرها % % أدركت من أخرى العلا ما تطلب % 76(@)(@@) % فاسمع أقرطك شنوفا درها % % لغير آذانكم لا يثقب % 77(@)(@@) % من المصونات التي تعنست % خلف الخدور وهي بكر تخطب % 78(@)(@@) % تنافس الملوك في مهورها % % و اقترعوا في حبها واحتربوا % % 79(@)(@@) % عندهم الرغبة والود لها % % و عندها الملال والتجنب % 80(@)(@@) % و زادها نزاهة وورعا % مني أب على البنات حدب % PageV01P164 81(@)(@@) % ليس عليه للتمني طاعة % و لا له في الشهوات أرب % 82(@)(@@) % لا يمدح الناس ولكن مدحكم % % يلزم في دين العلا ويجب % PageV01P165 البحر : - 1(@)(@@) % نأت والأماني بها تقرب % و ملت وأحسبها تعتب % 2(@)(@@) % و مال بها الغدر غدر الطبا % % ع عني والكاشح المجلب % 3(@)(@@) % و غيران يذعره اسمي بكم % % و يؤنسه حوله المقنب % 4(@)(@@) % يكون لغيري جناح البعو % % ض لينا ولي قومه المصعب % 5(@)(@@) % و منتحل في الهوى يدعى % % مقامي وشاهده يكذب % 6(@)(@@) % تبدل بي ساء ذاك البديل % كما بيع في الأخبث الأطيب % 7(@)(@@) % فيا عجبي من مريق دمي % % عنادا وقلبي به معجب % 8(@)(@@) % و مستهزي ضاحك من بكاي % % يجد بقلبي كما يلعب % 9(@)(@@) % أهيفاء أي هوى قد علم % % ت يقصى وأي أخ يقصب % 10(@)(@@) % و لما انطوى العام نفسي تر % % د عنك وحافزها يطلب % PageV01P166 11(@)(@@) % صددت كما انصرفت بالصدى % % غرائب أوجهها تضرب % 12(@)(@@) % أقول غدا نظرا للوفاء % % و غدركم من غد أقرب % 13(@)(@@) % و كيف اللقاء 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms52# وقد سدت ال % % مطالع يا ذلك الكوكب % 14(@)(@@) % و أين النجاء وما الحظ فيه % % و منك وأنت المنى المهرب % 15(@)(@@) % سل الهاجعين على ذي الطلوح % % و طرفي لهم حارس يرقب % 16(@)(@@) % اشمتم يمينا سنا بارق % يشوق على أنه خلب % 17(@)(@@) % تألق مستشرفا لا يسل % حتى يرى سيفه يقرب % 18(@)(@@) % يبين ريخفى رؤس الهضاب % فتنصل منه كما تخضب % 19(@)(@@) % يمر فيرغب في أضلعي % % صدوعا برجعتة تشعب % 20(@)(@@) % و هل عنده خبر إن سأل % % ت ما البانتان وما زينب % PageV01P167 21(@)(@@) % و هل ربع غرب في الباليا % % ت أم هل على عهدنا غرب % 22(@)(@@) % سقى بالحمى الأعين النابلا % % ت من دم أحشاي ما تشرب % 23(@)(@@) % و حيا الحيا أوجها لا تغش % لجين الجمال بها مذهب % 24(@)(@@) % و في السانحات بذاك الرمي % % ل عفراء تاه بها الربرب % 25(@)(@@) % من الذاهبات بحب القلو % % ب لا تقتضي رد ما تسلب % 26(@)(@@) % و ما نطفة حصنتها السماء % بأرعن مرقاه مستصعب % 27(@)(@@) % مصفقة حلبت عفوها % % بها المزن أول ما تحلب % 28(@)(@@) % إلى أن تبقت لباناتها % % و كادت بما لطفت تنضب % 29(@)(@@) % تراوحها وتغادي الشمال % ترقرق فيها وتستعذب % 30(@)(@@) % و لا نحلة بات يعسوبها % % على الحسن من حذر يلسب % PageV01P168 31(@)(@@) % يغار فيمنعها أن تشا % % ر ما منع الشائر المشغب % 32(@)(@@) % تجاذب فيها أكف الجنا % % ة غنى مثلها مثله تكسب % 33(@)(@@) % و لا مسكة طاف عطارها % % بدارين ينخل ما يجلب % 34(@)(@@) % يبقر عنها بطون الظباء % من الألف واحدة تنجب % 35(@)(@@) % فجاءت لضوعتها سورة % تكاد العياب بها تثقب % 36(@)(@@) % بأطيب من فم ذات الوشاح % % سحورا بلى فمها أطيب % 37(@)(@@) % تقول العواذل دع ذكرها % % ففي الذكر قادحة تلهب % 38(@)(@@) % وهبها كعارية تسترد % لا بد أو ثلة تعزب % 39(@)(@@) % فقلت إذن كبدي فلذة % من الصخر أو كبدي أصلب % 40(@)(@@) % تزم الحمول فلا أستكين % و تشدو الحمام فلا أطرب % PageV01P169 41(@)(@@) % عذيري من زمن لا يسر % بنعماء إلا بها ينكب % 42(@)(@@) % إذا قسم الحظ بين الرجال % % فحظي من ستر ما ينصب % 43(@)(@@) % تعاوى على تصاريفه % % تذأبب حولي وتستكلب % 44(@)(@@) % فأدفعهن بصبري الجميل % إذا ظلع المتن والمنكب % 45(@)(@@) % سأركب عزمي حتى يطير % عن الضيم عنقاء بي مغرب % 46(@)(@@) % و إلا فعند عميد الكفا % % ة حمى مانع وذرى معشب % 47(@)(@@) % و 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms53# راتعة من أماني العفا % % ة لا هي تظمى ولا تسغب % 48(@)(@@) % لها ما يوسع من ذرعها % % بساط الرجاء وما يرحب % 49(@)(@@) % كريم وشائج أعراقه % إلى العيص من مجده تضرب % 50(@)(@@) % توسع في نسب كالهلال % % إلى الشمس أعرق ما ينسب % PageV01P170 51(@)(@@) % بناة العلا آل عبد الرحي % % م يعرف بابنهم ما الأب % 52(@)(@@) % ميامين أندية المكرمات % % لهم تجتبى وبهم تعصب % 53(@)(@@) % إذا ذكروا العار لم يأمنوا % % و إن ركبوا السيف لم يرهبوا % % 54(@)(@@) % وجوه ميسرة للنجا % % ح باسمة والثرى يقطب % 55(@)(@@) % و أيد تخف إلى الأعطيات % إذا حسب الفقر لا تحسب % 56(@)(@@) % تراح عشارهم للشفار % فتعبط من قبل تستحلب % 57(@)(@@) % و لولا القرى ورشاد الضيو % % ف لم يغد عبد لهم يحطب % 58(@)(@@) % مضوا تضمن المجد أحداثهم % و ذكرهم خالد طيب % 59(@)(@@) % و قام أبو سعدهم ذائدا % % بميراثه وبما يكسب % 60(@)(@@) % فتاهم بما عد من سنه % و شيخ وأحلامهم تعزب % PageV01P171 61(@)(@@) % كفته بديهة حدثانه % قديم الرجال وما جربوا % % 62(@)(@@) % و غلس حتى انتهى واحدا % % له المجلس الصدر والموكب % 63(@)(@@) % كثير الغناء قليل العناء % فما يستريح وما يتعب % 64(@)(@@) % و ما يغمز الخطب في عوده % % إذا انقلب الزمن القلب % 65(@)(@@) % أبي جواد فيوم الخصام % % يحج ويوم الندى يغلب % 66(@)(@@) % يرى النفس تلك التي لا تذ % % ل والمال ذاك الذي يوهب % 67(@)(@@) % أصاخ بكم لي الأص % % م واعتذر الزمن المذنب % 68(@)(@@) % و ذللتم لي ظهور الرجا % % ء ما شئت أركب أو أجنب % 69(@)(@@) % و كنتم مآلي ومالي فلس % % ت أرهب شيئا ولا أرغب % 70(@)(@@) % ورد الوداد اليكم قيا % % د قلبي فما عنكم مذهب % PageV01P172 71(@)(@@) % و حلأت عن حوض شعري الملو % % ك وهو لكم مغدق معذب % 72(@)(@@) % صوارمه دونكم تنتضي % % و أذياله حولكم تسحب % 73(@)(@@) % أحن لكم حنة العاشقين % % فأمدحكم مثل ما أنسب % 74(@)(@@) % على ملل فيكم لا تزال % % بجنبي قوارفه تندب % 75(@)(@@) % متى آت لم أك مستكرها % % و أنأى فما أنا مستقرب % 76(@)(@@) % و كم ماطر فيهم بالوفاء % إذا رمت أنصافه يحلب % 77(@)(@@) % يدير كؤس الهوى بيننا % % فيسقي الغرام ولا يشرب % 78(@)(@@) % و من حاسد لي أرسانه % بما ساءني عندكم تجذب % 79(@)(@@) % إذا خافني دب في دوركم % % بعيبي كما دبت العقرب % 80(@)(@@) % فلا وشقاوته ما يشق % على البدر 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms54# أن تنبح الأكلب % PageV01P173 81(@)(@@) % و لو كنت أغلى عليكم رضاي % لما سركم أنني أغضب % 82(@)(@@) % و لكن فؤاد لكم رقه % فما يستبيع ولا يهرب % 83(@)(@@) % يريه الهوى أن إمساكه % % بكم من تنقله أصوب % 84(@)(@@) % و أن الحفاظ وحب الوفاء % على طين طابعه أغلب % 85(@)(@@) % فلا تنتزعكم يد تستم % % يح مني ولا قاهر يغصب % 86(@)(@@) % و لا أعدمن منكم أسرة % بأيسر عتبي لها تعتب % 87(@)(@@) % و غر مفوفة كالبرو % % د أو هي من حوكها أقشب % 88(@)(@@) % تجاري بروج العلا أو تعود % % و شرق النجوم لها مغرب % 89(@)(@@) % يذل النوال لكم صعبها % % فكل شوامسها تركب % % 90(@)(@@) % بكم هام ريقها في الشباب % و هذا لكم عمرها الأشيب % PageV01P174 91(@)(@@) % على كل يوم جديد السعو % % د ومن حسنها سمة تغرب % 92(@)(@@) % فإن جاءكم أعجمي اللسا % % ن فهي لسان له معرب % 93(@)(@@) % فتبقون وهي بواق قعود % ما اختلفت الصبح والغيهب % PageV01P175 البحر : - 1(@)(@@) % طرقت على خطر السرى المركوب % و الليل بين شبيبة ومشيب % 2(@)(@@) % و على الرحائل ساجدون دحاهم % % سكران سكر هوى وسكر لغوب % 3(@)(@@) % دعموا الخدود بأذرع مضعوفة % و تواقعوا لمناكب وجنوب % % 4(@)(@@) % و تعللوا طربا إلى أوطانهم % % بحنين كل مندب مجلوب % 5(@)(@@) % فكأن صحبي نافحتهم قرقف % أوفز بينهم عياب الطيب % 6(@)(@@) % فعجبت للزور القريب دنا به % % قدر وليس مزاره بقريب % 7(@)(@@) % يسري وحيدا بالعراق وأهله % % ما بين قنة لعلع و عسيب % 8(@)(@@) % و أبي سلامة إنما جلب الكرى % % منها عدوا في ثياب حبيب % 9(@)(@@) % لو حكمت يقظى لما زارت بلا % % عدة ولا وصلت بغير رقيب % % 10(@)(@@) % يا أخت فهر والمحبة بيننا % % نسب وإن ناداك غير نسيب % PageV01P176 11(@)(@@) % لولاك لم أشم الخلاب ولا صبت % نفسي لأحلام الكرى المكذوب % 12(@)(@@) % و لكان لي مندوحة بالحزن في % % أخويك من رشأ له وقضيب % 13(@)(@@) % ناهضت حبك والنحول يخونني % % و كتمت سرك والدموع تشي بي % % 14(@)(@@) % و حملت حتى قيل مات إباؤه % % و جزعت حتى قيل غير لبيب % 15(@)(@@) % فإذا وذلك ليس عندك نافعا % % لما مللت وقل منك نصيبي % % 16(@)(@@) % تتجرمين الذنب تجزيني به % % و الشيب والإقلال كل ذنوبي % % 17(@)(@@) % ثنتان لو خيرت في كلتيهما % % عمر الربا مالي وعمر مشيبي % % 18(@)(@@) % و لقد حبست عن اللئام مطامعي % % و أطلت في دار 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms55# الهوان مغيبي % % 19(@)(@@) % و عزفت والأرزاق مطمح ناظري % % أنفا من المتنن الموهوب % 20(@)(@@) % ما لي أذل وسيف نصري في فمي % % و الصون بين مآزري وجيوبي % % PageV01P177 21(@)(@@) % و على دون الحاسدين ونبلهم % % درعان من فطني ومن تجريبي % % 22(@)(@@) % و حماية الأحرار تحفظ جانبي % % و الفضل يمنع سارحي وعزيبي % % 23(@)(@@) % و إذا فزعت لجأت من أسد إلى % % أسد تأشب في القنا المخضوب % 24(@)(@@) % و نزلت في غرف العلا متظللا % % بالعز تحت رواقها المضروب % 25(@)(@@) % و علقت منها ذمة ومودة % أن فات حماد بحبل شبيب % 26(@)(@@) % الماجد ابن الماجدين وربما % % تجد النجيب وليس بابن نجيب % 27(@)(@@) % و ابن القرى وابن الصوارم والقنا % % و الخيل تخلط أرجلا بسبيب % 28(@)(@@) % و الواهبي ما لا يجاد بمثله % و السالبي ما ليس بالمسلوب % 29(@)(@@) % و الراكبين إلى ذوي حاجاتهم % % ظهرا من الأخطار غير ركوب % 30(@)(@@) % جادوا فقال المال سحب مواهب % وسطوا فقال الموت أسد حروب % PageV01P178 31(@)(@@) % و تتابعوا في المجد ينتظمونه % % و الرمح أنبوب على أنبوب % 32(@)(@@) % كانوا الأسنة في معد كلها % % و الناس بين معاقد وكعوب % 33(@)(@@) % إن فوخروا شهدت لهم أيامهم % % فيها بكل معلم مكتوب % 34(@)(@@) % يتوارثون مكارما مضرية % إرث النبوة في بني يعقوب % 35(@)(@@) % درجوا عليها آخذين بحكمها % % لم يفسدوا حسناتها بعيوب % 36(@)(@@) % و جرى أبو الحملات يطلب شأوهم % % أكرم به من لاحق وطلوب % 37(@)(@@) % قالوا الهمام فأفرجت أبطالهم % لك عن طريق الضيغم المرهوب % 38(@)(@@) % لقب يصدق فيك معناه اسمه % % و من الرجال مموه التقليب % 39(@)(@@) % لك يا شبيب صباحها ورواحها % % عقر الكماة بها وعقر النيب % 40(@)(@@) % و على سلاحك أو سماحك أركزت % راياتها بفنائها المطلوب % PageV01P179 41(@)(@@) % أصبحت غرة مجدها فبياضه % % مستخرج من لونك الغربيب % 42(@)(@@) % و علامة العربي دهمة وجهه % % و من الوجوه البيض غير حسيب % % 43(@)(@@) % و البدر أشرف طالع في أفقه % % و بياضه المرموق فوق شحوب % 44(@)(@@) % لله بيتك أمنه وجفانه % و الحق بين مخافة وجدوب % 45(@)(@@) % و مكرمات النسل تهون في القرى % % بالمصطفى منها وبالمجنوب % 46(@)(@@) % و إذا الوقود خبا جعلت لحومها % % حطبا لنار الطارق المجلوب % 47(@)(@@) % من كل مشرفة تحدث هامة % و رديفة عن صخرة و عسيب % 48(@)(@@) % الكور في وضح الصباح لظهرها % % و السيف في الظلماء للعرقوب % 49(@)(@@) % حدثت 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms56# والخبر الجلي مصدق % عن سيبك المتدفق المسكوب % 50(@)(@@) % و شمائل لك في الندى مطبوعة % كالتبر ليس صفاؤه بمشوب % PageV01P180 51(@)(@@) % و بما عرفت فضائلي ووصفتها % % و رغبت في ودي وفي تقريبي % % 52(@)(@@) % فاستاق منك غريب أشعاري إلى % % متوحد في المكرمات غريب % 53(@)(@@) % فبعثتها لك فاتحا ما بيننا % % باب الوصال ونهزة الترغيب % 54(@)(@@) % من كل سارية بذكرك صيتها % % في الأرض بين نوافد وسهوب % 55(@)(@@) % تزداد صبرا في الزمان وقوة % أبدا على الإدلاج والتأويب % 56(@)(@@) % و هي التي شجت الملوك وخودعوا % % منها عن المنفوس والمرغوب % % 57(@)(@@) % فاستقربوها مغرمين بها وما % % تزداد غير تمنع ونكوب % 58(@)(@@) % و تفردت في ذا الزمان بمعجز % لم تؤت من رد ومن تكذيب % 59(@)(@@) % فاعرف لها حق الزياره بغتة % و تلقها بالأهل والترحيب % 60(@)(@@) % و أكرم عليها تجتلب أخواتها % % إن الصلاة تتم بالتعقيب % PageV01P181 61(@)(@@) % طلبتك تأمل أن تنال بك الغنى % % فلئن وفيت لها فغير عجيب % PageV01P182 البحر : - 1(@)(@@) % نظرة منك ويوم بالجريب % حسب نفسي من زمان وحبيب % 2(@)(@@) % فمن الواقف بي بينكما % % جمع الفوق على سهم مصيب % 3(@)(@@) % وقفة لا أشتكي من بعدها % % غلة الصدر ولا ذل الغريب % 4(@)(@@) % يا ابنة الجمرة من ذي يزن % في الصميم العد والبيت الرحيب % 5(@)(@@) % ما لكم لا أجدب الله بكم % % يرتعي جاركم غير الخصيب % 6(@)(@@) % الجدي يمنعه ذو جدة % و الجناب الرحب ينبو بالجنوب % 7(@)(@@) % و رماح دون أضيافكم % تأخذ السالم فيكم بالمريب % 8(@)(@@) % أتقيكم والهوى يقدم بي % % و أغض الصوت والدمع يشي بي % % 9(@)(@@) % و من الشقوة في زورتكم % % أن عين الرمح من عين الرقيب % 10(@)(@@) % لا يكن آخر عهدي بكم % ياولاة القلب ليلات القليب % PageV01P183 11(@)(@@) % يا لمن ينكص عن غزلانكم % % و هو وثاب على الليث الغضوب % 12(@)(@@) % و متى العز وفي أبياتكم % % أعين تقهر سلطان القلوب % 13(@)(@@) % يا صبا نجد ويا بان الغضا % % أرفقا بي بالتثني والهبوب % 14(@)(@@) % و أسلما لا مثل ما طاح دمي % % منكما بين نسم وقضيب % 15(@)(@@) % قسم البين فما عدل بي % % غدرة الوافي وتبعيد القريب % 16(@)(@@) % و قضى الدهر فحالت صبغة % عد ذنب الدهر فيها من ذنوبي % % 17(@)(@@) % و فؤادي يشتكي جور النوى % % و عذاري يشتكي جور المشيب % 18(@)(@@) % كم أداري عنت الأيام في % % غبن حظي وأطاطي 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms57# للخطوب % 19(@)(@@) % و أرد الحزم في أفحوصه % % و هو هاف يتنزى للوثوب % 20(@)(@@) % قاعدا والجد قد رحل بي % % و المعالي يتقاضين ركوبي % % PageV01P184 21(@)(@@) % جلسة الأعزل يلوى يده % و سلاحي بين كوري وجنيبي % % 22(@)(@@) % أمدح المثرين ظنا بهم % ربما يقمر بالظن الكذوب % 23(@)(@@) % كل وغد الكف منبوذ الحيا % % طيب المحضر مسبوب المغيب % 24(@)(@@) % يمنع الرفد وتلقى وفده % % قحة البخل بإدلال الوهوب % 25(@)(@@) % يطلب المدح لأن يفضحه % و هو قبل المدح مستور العيوب % 26(@)(@@) % قلت للآمال فيه كذبت % أمه إن كنت آمالي فخيبي % % 27(@)(@@) % جلب الأرض عريض دونه % % و سرى العيس وإدمان اللغوب % 28(@)(@@) % و غلام آخذ ما طلبت % نفسه أو فائت كل طلوب % 29(@)(@@) % يقمح الضيم ولو أبصره % ليلة العشر على الماء الشروب % 30(@)(@@) % ما اذل الخصب في دار الأذى % % و ألذ العز في دار الجدوب % PageV01P185 31(@)(@@) % يا بني كل نعيم ضاحك % في حمى وجه من اللؤم قطوب % 32(@)(@@) % قد مللناكم على شارتكم % % و يضيق الصدر في البيت الرحيب % 33(@)(@@) % و عسى الدنيا التي أدتكم % تصطفينا من بنيها بنجيب % 34(@)(@@) % ماجد الشيمة سهل ليله % للقرى صب إلى الحمد طروب % 35(@)(@@) % يكسب المال لأن يتلفه % و العلا في يد متلاف كسوب % 36(@)(@@) % تخبث الأيدي وفي راحته % من نداه أرج المشتا المطيب % 37(@)(@@) % كابن حماد ولا مثل له % % هل ترى للبدر فردا من ضريب % 38(@)(@@) % جاذب الرواض عن مقوده % مرس تنكره كف الجذيب % 39(@)(@@) % و دعا الناس إلى تسويده % واسع الجمرة وهاج الثقوب % 40(@)(@@) % أين يا سائقها أين بها % % جعجع الآمال في غير عزيب % PageV01P186 41(@)(@@) % جمع الصاحب من أطرافها % % و في حيرى الطرق عمياء النكوب % 42(@)(@@) % ضمها بالرأي حتى التأمت % شلتاها من شذوذ وشذوب % 43(@)(@@) % و يد لا تربت تلك يدا % ربقة الجاني وفك المستنيب % 44(@)(@@) % سلت الدولة منه صارما % % شرق الصفحة ظمآن الغروب % 45(@)(@@) % طبع الأقبال من جوهره % زبرة تقدح نيران الحروب % 46(@)(@@) % لو أطاعته يد حاملة % لم تكذب ظبتاه عن ضريب % 47(@)(@@) % جربوه ماضيا حيث مضى % % صادع الوحي ومحتوم الغيوب % 48(@)(@@) % قلقا ينفي الكرى عن وجهه % علمه أن المعالي في الهبوب % 49(@)(@@) % ألمعيا سودته نفسه % و المساعي قبل تسويد الشعوب % 50(@)(@@) % قدمته صاعدا عن قومه % مصعد اللهذم قدام الكعوب % PageV01P187 51(@)(@@) % هبهبوا منه بليث في 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms58# الوغى % % قرم الأظفار مشتاق النيوب % 52(@)(@@) % خير من خبت له أو وخدت % للجدى ذات سنام وسبيب % 53(@)(@@) % يأخذ الحاجات من حيث غلت % غير معذول على حب الغصوب % 54(@)(@@) % تحسب الغابة مما اجتره % حومة بين عقير وتريب % 55(@)(@@) % ماضيا لم يثنيه عن قصده % هجمة الليل ولا طول الدؤوب % 56(@)(@@) % جمع الجود إلى البأس كما % % شعشعت نار بماء في قضيب % 57(@)(@@) % راحة لم يعلق البخل بها % % و فؤاد لم يسفه بالوجيب % 58(@)(@@) % و لسان يخصم السيف به % يترك الفارس عبدا للخطيب % % 59(@)(@@) % من رسول سعدت رحلته % يوم أدعوه بلبيك مجيبي % % 60(@)(@@) % ناصح الجيب بما حملته % حيث يخشى مرسل غش الجيوب % PageV01P188 61(@)(@@) % لم أكلفه سرى البيد ولم % % أتعسفه بأخطار السهوب % 62(@)(@@) % عيسه ملمومة يركب منها % % مطمئنا ظهر مذلال ركوب % 63(@)(@@) % تقسم الماء بياع مطلق % و فقار مرسل الحبل سروب % 64(@)(@@) % صعبة الخلقة سهل أرضها % % فهو بين اللين منها والصليب % 65(@)(@@) % ساريا ليست عليه خيفة % ما وقاه الله سورات الجنوب % 66(@)(@@) % قل لنوتيك شرع آمنا % % حدث التيار والموج العصيب % 67(@)(@@) % رد بها ميسان واحبسها على ال % % معقل الممنوع والوادي العشيب % 68(@)(@@) % فإذا ضاقت فعلقها أبا % % طاهر تعلق بفراج الكروب % 69(@)(@@) % و إلى ذي الرتبتين ابتدرت % فرص المجد وحاجات الأريب % 70(@)(@@) % قل له عني حيتك العلا % % بوكيف من حيا الشكر صبيب % PageV01P189 71(@)(@@) % و سقى عرضك ما استسقيته % % بارق من مدحى غير خلوب % 72(@)(@@) % ترفل الأحساب في روضته % مرفل الغادة في البرد القشيب % 73(@)(@@) % خير ما استثمر من غرس الندى % % و اجتنى من غصن الجود الرطيب % 74(@)(@@) % و بذلت الوفر حتى اتبعته % هم آدابك من حسن وطيب % 75(@)(@@) % جاءني أنك مشعوف به % % شعف العذري بالخشف الربيب % 76(@)(@@) % راغبا أن تصطفى من جده % % و الفكاهات بمدح أو نسيب % 77(@)(@@) % و تحلى منه عقدا باقيا % % فخره في كل جيد وتريب % 78(@)(@@) % قلت فضل عجب من دهرنا % % و هو من فاعله غير عجيب % 79(@)(@@) % ما تبالي حين تستام العلا % % أخطيب الشمس أم أنت خطيبي % % 80(@)(@@) % أنا من يعطيك مجدا حاضرا % % و يبقي لك مجدا في العقيب % PageV01P190 81(@)(@@) % لا كقول يطرد الساقي به % % جذوة تخمد من قبل اللهيب % 82(@)(@@) % كم يميني على سلطانها % % نفس مرجو ومخشى مهيب % 83(@)(@@) % و ابتغي بالمال أن 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms59# يشريني % % فترفعت فطارت عفتي بي % % 84(@)(@@) % لكن اشتقت وقد سميت لي % % بسمات الفضل والجود الغريب % 85(@)(@@) % فاقترع خير هدى وأثب % خير ما جادت به نفس مثيب % 86(@)(@@) % و إذا صرت نصيبي منهم % فقد استوفيت من دهري نصيبي % % PageV01P191 البحر : - 1(@)(@@) % نرق وتقسو بالغوير قلوب % و نسأل سكان الغضا ونخيب % 2(@)(@@) % و تهفو على ذات النقا بحلومنا % % وجوه تريح الوجد وهو عزيب % 3(@)(@@) % وقفنا ومنا رابط جأش قلبه % بريء ومحلول العزاء مريب % 4(@)(@@) % تجاذبنا أيدي الحمية والهوى % % و نأبى على الأشواق ثم نجيب % 5(@)(@@) % نغالط ألحاظ المها عن قلوبنا % % و بالرمل قاري السهام مصيب % 6(@)(@@) % إذا أخفق القناص راح بكل ما % % يرى مطعم للصيد منه كسوب % 7(@)(@@) % قضى من دماء ما استحل وحلقت % به نية عما أشاط شعوب % 8(@)(@@) % فما هو بعد العنف إلا علالة % أحاديث نفس تفتري وتحوب % 9(@)(@@) % تسرك منها والدجى في قميصه % % زخارف يحلو زورها ويطيب % 10(@)(@@) % فتطرب والشادي بها سامر المنى % % و تشرب ما يسقى وجفنك كوب % PageV01P192 11(@)(@@) % حمى الله عينا من قذاها على الحمى % % تجف ضروع المزن وهي حلوب % 12(@)(@@) % إذا قلت أفنى البرق جمة مائها % % مراها مرور البرق وهي جنوب % 13(@)(@@) % بكت وغدير الحي طام فأصبحت % % عليه المطايا الحائمات تلوب % 14(@)(@@) % و ما خلت قبلي أن عينا ركية % و لا أن ملح الماقيين شروب % 15(@)(@@) % و ليلة ذات البان ساهرت طالعا % % من النجم لم يكتب عليه غروب % 16(@)(@@) % أسائل عن نومي وضوء صباحها % % و أعيا فأي الغائبين يؤوب % 17(@)(@@) % سرت تخبط الوادي إلى وصحبتي % % طريح على أقتابه وكئيب % 18(@)(@@) % أناخوا إلى تعريسة قل عمرها % % فما هي إلا خفقة وهبوب % 19(@)(@@) % فللريح منهم أعين ومسامع % و للترب منهم أذرع وجنوب % 20(@)(@@) % فزارت فحيت ممسكا بفؤاده % له نازع من شوقه وجذيب % PageV01P193 21(@)(@@) % فيا لك باقي ليلة لو تخلصت % من الغش يقذي صفوها ويشوب % 22(@)(@@) % و لكن نهاني الخوف قم أنت مدرك % و صاح الظلام الصبح منك قريب % 23(@)(@@) % و لم أدر أن القرب عين حفيظة % على ولا أن الوصال رقيب % 24(@)(@@) % يخوفني عض الزمان ومنكبي % % رديد على حمل الزمان جليب % 25(@)(@@) % تعودته لا خاضعا لخطوبه % % و كيف وكل العيش فيه خطوب % 26(@)(@@) % و كم غمزة في جانبي 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms60# لم أقل لها % % ألمت وجرحى لو شكوت رغيب % 27(@)(@@) % تعمق فيها مخلبا ومنيبا % % و أقلع والنبع الأصم صليب % 28(@)(@@) % و هل أتغطى منه خوفا وموئلي % % جناب منيع للوزير رحيب % 29(@)(@@) % و دوني منه إن مشى نحوي الأذى % % طراب تدمى الناعلات ولوب % 30(@)(@@) % و حصداء من نعماه كل مسدد % له حيد عن سردها ونكوب % PageV01P194 31(@)(@@) % حماني من الأيام أروع لو حمى % % سبابي لم يقدم عليه مشيب % 32(@)(@@) % رعى شرف الدين العلا برعايتي % % فما شم ريحا حول سرحي ذيب % 33(@)(@@) % أثر بزلها يا طالب المجد والغنى % % و خاطر بها فابن الخطار نجيب % 34(@)(@@) % و طرق هواديها الجبال وخلها % % تجوب مع الظلماء حيث تجوب % 35(@)(@@) % تقدم بها فالسعد بالمرء مقبل % و لا تتهيب فالشقاء هيوب % 36(@)(@@) % أقم بني عبد الرحيم صدورها % % إذا حط منها أو أمال لغوب % 37(@)(@@) % و غن بهم أسماعها إن حدوتها % % تحن إذا حنت لتطرب نيب % 38(@)(@@) % ففي العيس قلب مثل قلبك ماجد % و سمع إلى ذكر الكرام طروب % 39(@)(@@) % تميم أعالي دجلة فانح شامة % بحيث تبل العيش وهو جديب % 40(@)(@@) % و ناص بها فرع الدجيل فعنده % % مراد يعم الرائدين عشيب % PageV01P195 41(@)(@@) % و قل لعميد الدولة اسمع فإنها % % ملاحم إن فتشتها وخطوب % 42(@)(@@) % لحظت ذرا أعجازها من صدورها % % و بعض ظنون الألمعي غيوب % 43(@)(@@) % و داويتها بالرأي حتى كفيتها % % و ما كل آراء الرجال طبيب % 44(@)(@@) % عجلت لها مستأنيا ما وراءها % % و للآمر باد ظاهر وعقيب % 45(@)(@@) % خلصت خلوص التبر منها مسلما % عليك وميض صادع ولهيب % 46(@)(@@) % و قالوا خطاء مسرعا متعجلا % % و قد يتأنى في الأمور طلوب % 47(@)(@@) % و أهون بالتغرير فيها كأنه % % بجد الخطوب المثقلات لعوب % 48(@)(@@) % و ما علموا أن السهام موارق % و لا أن خطوات الأسود وثوب % 49(@)(@@) % سهرت ونام الغمر عما رأيته % ففزت وطرف الألمعي رقوب % 50(@)(@@) % كأن لك اليوم المنعم صبحة % و يوم الحريص المستغر عصيب % PageV01P196 51(@)(@@) % و قالوا طوى بغداد بغضا وسلوة % و بغداد مغنى للحياة خصيب % 52(@)(@@) % و ظنوك إذ فارقتها أن قلبها % % على قلة الإعراض عنك يطيب % 53(@)(@@) % و قد تظعن الأشخاص والحب قاطن % و يكثر هجر البيت وهو حبيب % 54(@)(@@) % و ما الملك إلا جنة عم نورها % % و 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms61# مذ غبت عنها سهمة وشحوب % 55(@)(@@) % فكيف غدت شلاء لا بدم العدا % % و لا بعطار الغانيات خضيب % 56(@)(@@) % بكى وحشة وهو المغيض دموعه % و أن لحر الجرح وهو ضريب % 57(@)(@@) % و كنت له وجها ضحوكا فبشره % عبوس وقد فارقته وقطوب % 58(@)(@@) % يورى حياء والندامة غصة % لها خدشة في صدره وندوب % 59(@)(@@) % إلى ماجد في صدره قمر الدجى % % إذا تم راض والهزبر غضوب % 60(@)(@@) % تقبل منه راحة تقتل الصدى % % تعلم منها المزن كيق يصوب % PageV01P197 61(@)(@@) % رست في الندى حتى استقرت عروقها % % من البحر والعرق الكريم لصوب % 62(@)(@@) % يد تعجب الأقلام من أنس سيفه % بها وهو فيما بينهن غريب % 63(@)(@@) % إذا اختصموا قالت تأخر فإنما % % لنا السبق فاتبعنا وأنت جنيب % 64(@)(@@) % فيأبى له الحد المصمم أنه % % يؤخر والأقلام عنه تنوب % 65(@)(@@) % و تجري هنات بينهن وبينه % % يحكم فيها فارس وخطيب % 66(@)(@@) % فيجعل للأقلام فيها نصيبها % % بحق وللسيف الحسام نصيب % 67(@)(@@) % و قد زعموا أن الحجا متكهل % و أن رجالات السيادة شيب % 68(@)(@@) % فلله منك المنتهى في إقباله % و من رب أمر الناس وهو ربيب % 69(@)(@@) % و من بسقت أغصانه فتفرعت % على الشجر العادي وهو قضيب % 70(@)(@@) % و لا تبل أثواب الوزارة بعد ما % % كستك بها الأيام وهي سليب % PageV01P198 71(@)(@@) % تقصمها قوم وما خلقت لهم % % فهانوا ومن بعض الجمال عيوب % 72(@)(@@) % أتتك فصار الرق في يد مالك % و قد دنستها بذلة وغضوب % 73(@)(@@) % و سالم معناها بسوددك اسمها % % و بينهما في آخرين حروب % 74(@)(@@) % تنافى بيوت معشر وبيوتها % % و أنت لها في جانبيك نسيب % 75(@)(@@) % فما بيت إسماعيل عنها بنازح % و لا أن بها عبد الرحيم غريب % 76(@)(@@) % فلو هب ميت من كراه فقام أو % % تطلع مرموس الجبين تريب % 77(@)(@@) % لقرت عيون أو لسرت مضاجع % بأنك ميراث لها وعقيب % 78(@)(@@) % إذن لرأت منك الذي الشمس لا ترى % % بأنجمها في الأفق حين تغيب % 79(@)(@@) % نشرت لهم فخرا يعيش حديثه % و يخلق عمر الدهر وهو قشيب % 80(@)(@@) % لئن عم شر أو أسرت ضغائن % ببغي فإن الله عنك حسيب % PageV01P199 81(@)(@@) % و قد علمت نجوى رقاك عقارب % لها نحوكم تحت الظلام دبيب % 82(@)(@@) % و لم تك إلا هفوة واستقالها ال % % زمان وذنبا وهو منه يتوب 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms62# % 83(@)(@@) % و لا بد للإقبال من يوم عودة % تدافع عنه العين حين تصيب % 84(@)(@@) % و كم رافع لي بالعداوة صوته % يهبهب في إبعاده ويهيب % 85(@)(@@) % قويا على ظلمي بسيف عدوكم % % و عهدي به بالأمس وهو يخيب % 86(@)(@@) % يظن وحشاكم عراي تقطعت % و أني أخيذ والزمان طليب % 87(@)(@@) % و أن قناتي بعدكم ستلينها % % ضروس له مذروبة ونيوب % 88(@)(@@) % و لم يدر أن الشام لو حال دونكم % % و زيلته عنكم لكنت أصيب % 89(@)(@@) % فقلت لفيك الترب أو فوقك الحصى % % تغيب أسود الغاب ثم تؤوب % 90(@)(@@) % غدا تطلع الرايات والنصر تحتها % % كتيبا يوليه النجاح كتيب % PageV01P200 91(@)(@@) % ترى المجد في أطرافها خافق الحشا % % سرورا بما ضمت وأنت كئيب % 92(@)(@@) % و بغداد طلق وجهها متبسم % و للملك من بعد الخمود شبوب % 93(@)(@@) % بشائر لي في مثلهن مواقف % أصدق فيها والزمان كذوب % 94(@)(@@) % مجرية فيكم كأن عيونها % % لها خلف أستار الغيوب ثقوب % 95(@)(@@) % تمر لكم طيرى يمينا بزجرها % % على مشهد مني وحين أغيب % 96(@)(@@) % نشدتكم بالله كيف رأيتم % مناجحها والعائفات تخيب % 97(@)(@@) % فقولوا نعم وفقت وأرعوا ذمامها % % غدا وغد للناظرين قريب % 98(@)(@@) % بكم يا بني عبد الكريم أنجلي القذى % % و أصبح وعر الجود وهو لحيب % 99(@)(@@) % إذا أجدبت أرضى وسدت مواردي % % فعنكم لي روضة وقليب % 100(@)(@@) % و لما رأيت الحب في الهزل سنة % عشقتكم والعاشقون ضروب % PageV01P201 101(@)(@@) % فمن يعط منكم طالبا فوق حقه % فحقي دين لازم ووجوب % 102(@)(@@) % فلا قلصت عني سحائب ظلكم % % فمنها مرذ تارة وسكوب % 103(@)(@@) % و لا عدمتكم نعمة خلقت لكم % % و دنيا لكم فيها الحياة تطيب % 104(@)(@@) % يزوركم النيروز مقتبل الصبا % % و قد دب في رأس الزمان مشيب % 105(@)(@@) % تصوح أغصان الأعادي وغصنكم % % من السعد ريان النبات رطيب % 106(@)(@@) % دعاء حيالى فيه ألف مؤمن % توافق منهم ألسن وقلوب % PageV01P202 البحر : - 1(@)(@@) % ألا من مبلغ أسدا رسولا % % متى شهد الندى فما أغيب % 2(@)(@@) % و عوف منهم أربي فعوف % عيون خزيمة وهم القلوب % 3(@)(@@) % أفرسان الصباح إذا اقشعرت % من الفزع السنابك والسبيب % 4(@)(@@) % و ضاق مخارج الأنفاس حتى % % تفرج عن سيوفكم الكروب % 5(@)(@@) % و يا أيدي الحيا والعام جدب % و وجه الأرض مغبر قطوب % 6(@)(@@) % مجازر تفهق الجفنات منها % % و نار قرى شرارتها لهيب % 7(@)(@@) % إذا 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms63# جمد الضيوف تكفلتهم % % لها فلذ وأسنمة تذوب % 8(@)(@@) % و يا أقمار عدنان وجوها % % يشف على وضاءتها الشحوب % 9(@)(@@) % أصيخوا لي فلي معكم حديث % عجيب يوم أنثوه غريب % 10(@)(@@) % متى أنصفتم فالحق فيه % % عليكم واضح لي والوجوب % PageV01P203 11(@)(@@) % و إن أعرضتم ورضيتموه % فإن المجد ممتعض غضوب % 12(@)(@@) % حديث لو تلوه على زهير % غدا من مدحه هرما يتوب % 13(@)(@@) % بأي حكومة وبأي عدل % أصاب من القريض ولا أصيب % 14(@)(@@) % و كم أعراضكم تزكو بمدحي % % و تنجح والمنى فيكم تخيب % 15(@)(@@) % تردون الغصوب بكل أرض % و توجد في بيوتكم الغصوب % 16(@)(@@) % و تحمون البلاد وفي ذراكم % % حريم الشعر منتهك سليب % 17(@)(@@) % و عندكم لكل طريد قوم % جوار مانع وفري رحيب % 18(@)(@@) % و أبكار وعون من ثنائي % % عجائف عيشها فيكم جديب % 19(@)(@@) % محببة إذا رويت فإما % % طلت مهورهن فلا حبيبي % 20(@)(@@) % إذا أحسنت في قول أساء ال % % فعال كأن إحساني ذنوب % PageV01P204 21(@)(@@) % أجر المطل عاما بعد عام % مواعد برقها أبدا خلوب % 22(@)(@@) % و يا للناس أسلب كل حي % كرائمه ويسلبني شبيب % 23(@)(@@) % أمد اليه أرشية المعالي % % فيعطشني وراحته القليب % 24(@)(@@) % و ألبسه ثياب المدح فخرا % % فيمسك لا يجيب ولا يهيب % 25(@)(@@) % و يسمح خاطري فيه ابتداء % و يمنع وهو بذال وهوب % 26(@)(@@) % و لم نعرف غلاما مزيديا % يناديه السماح فلا يجيب % 27(@)(@@) % و لو ناديت من كثب عليا % تدفق ذلك الغيث السكوب % 28(@)(@@) % و من على عوائده القدامى % % مضي الريح جد به الهبوب % 29(@)(@@) % و لو حماد يزقو لي صداه % % لأكرم ذلك الجسد التريب % 30(@)(@@) % أصولكم وأجدر إذ شهدتم % % مقام علائهم ألا يغيبوا % % PageV01P205 31(@)(@@) % فما لك يا شبيب خلاك ذم % تجف وعندك الضرع الحلوب % 32(@)(@@) % و ما لخريدة خفيت لديكم % % تكاد على طفولتها تشيب % 33(@)(@@) % محللة النكاح بى صداق % و ذلك عندكم إثم وحوب % 34(@)(@@) % يطيب الشيء مرتحضا مباحا % % و مرتخص المدائح لا يطيب % 35(@)(@@) % فأين حياء وجهك يوم تحدى % % بها في وصفك الإبل اللغوب % 36(@)(@@) % و أين حياء وجهك في البوادي % % إذا غنى بها الشادي الطروب % 37(@)(@@) % و كيف تقول هذا وصف مجدي % % فلا أجدي عليه ولا أثيب % 38(@)(@@) % و كم نشرت على قوم سواكم % % فلم يعلق بها الرجل الطلوب % 39(@)(@@) % و راودني ملوك الناس 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms64# عنها % % و كل باذل فيها خطيب % 40(@)(@@) % فلم يكشف لها وجه مباح % و لم يعرف لها ظهر ركوب % PageV01P206 41(@)(@@) % فلا يغررك منها مس صل % يلين وتحت هدأته وثوب % 42(@)(@@) % أخاف بأن يعاجلني فيطغى % % فتصبح بالذي تثني تعيب % 43(@)(@@) % و تشرد عنكم متظلمات % و تبغون الإياب فلا تؤوب % PageV01P207 البحر : - 1(@)(@@) % جاء بها والخير مجلوب % طيف على الوحدة مصحوب % 2(@)(@@) % طوى الفى يركب أشواقه % % و الشوق في الأخطار مركوب % 3(@)(@@) % ساعة لا مسرى على شقة % تعيا بها البزل المصاعيب % 4(@)(@@) % يرغب في الظلماء مستأنسا % % و جانب الظلماء مرهوب % 5(@)(@@) % أحسن بي حتى تخيلته % % أصدق شيء وهو مكذوب % 6(@)(@@) % أني تسديت لنا باللوى % % وصارة دارك فاللوب % 7(@)(@@) % و بيننا عمياء من أرضكم % % دليلها أبله مسلوب % 8(@)(@@) % لا يهتدى الذئب إلى رزقه % فيها ولو شم بها الذيب % 9(@)(@@) % فزرت شعثا طاف ساقي الكرى % % عليهم والطاس والكوب % 10(@)(@@) % فما تدلى النجم حتى التوى % % مماكس منهم وشريب % PageV01P208 11(@)(@@) % بت ورحلي بك ريحانة % نم عليها الحسن والطيب % 12(@)(@@) % كأنما ذيل الصبا فوقها % % بالقطر أو ذيلك مسحوب % 13(@)(@@) % يا ابنة قوم وجدوا ثأرهم % % عندي بها والثأر مطلوب % 14(@)(@@) % لولاك والأيام دوالة % ما استعبد الفرس الأعاريب % 15(@)(@@) % أراجع لي بضمان المنى % % ملحوب أو ما ضم ملحوب % 16(@)(@@) % و صالحات من ليالي الحمى % % ما شابها إثم ولا حوب % 17(@)(@@) % لهوى نسك ووجوه الدمى % % تحت دجاها لي محاريب % 18(@)(@@) % و ذاهل عاب حنيني لها % % و لم يعب أن حنت النيب % 19(@)(@@) % قال سفاه ذكر ما قد مضى % % و ظن أن اللوم تأديب % 20(@)(@@) % ما لك لا أحببت إلا ومن % % فوقك سوط العذل مصبوب % PageV01P209 21(@)(@@) % إن أبك أمرا بعد ما فاتني % % فقد بكى قبلي يعقوب % 22(@)(@@) % و أنكر الصبوة من شائب % حتى كأن ما صبت الشيب % 23(@)(@@) % و هل عدتني شيبة في الحشا % % إذ مفرقي أسود غربيب % 24(@)(@@) % لا لاقط فيها ولا خاضب % و الشيب ملقوط ومخضوب % 25(@)(@@) % يغلب فيها الحب أمر النهى % % و الحزم بالأهواء مغلوب % 26(@)(@@) % أما تقنعت بها رثة % لابسها عريان مسلوب % 27(@)(@@) % تلاقت الأوجه مقتا لها % % عني فمزور ومقطوب % 28(@)(@@) % ناصعة في العين لكنها % % تبغض والناصع محبوب % 29(@)(@@) % فقد أراها وضيا وجهها % % لي شرك في البيض منصوب % 30(@)(@@) % أيام في قوس الصبا 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms65# منزع % و نبله المكنون منكوب % PageV01P210 31(@)(@@) % و قد أزور الحي مستقبلا % لي منه تأهيل وترحيب % 32(@)(@@) % و أغشم البيت بلا آذن % و هو على الأقمار مضروب % 33(@)(@@) % و أشهد النادي فمستعبد ال % % سمع بآياتي ومخلوب % % 34(@)(@@) % و موصد الأبواب ناديته % حتى بدا لي وهو محجوب % 35(@)(@@) % خادعت من سلطانه صخرة % فانجبست لي وهي شؤبوب % 36(@)(@@) % و رحت عنه والذي يملك ال % % مملوك والغاصب مغصوب % 37(@)(@@) % فاليوم إن صرت إلى ما ترى % % فهي الليالي والأعاجيب % 38(@)(@@) % آنسني بالعدم توفيره % عرضي وأن المال موهوب % 39(@)(@@) % جربت قوما فتجنبتهم % % و رسل العقل التجاريب % 40(@)(@@) % و زادني خبرا بمن أنقى % % أني بمن آمن منكوب % PageV01P211 41(@)(@@) % قل لأخي الحرص أسترح إنما % % حظك إدلاج وتأويب % 42(@)(@@) % إذا الحظوظ انصرفت جانبا % % لم يغن تصعيد وتصويب % 43(@)(@@) % مالك تحت الهون مسرزقا % % و إنما رزقك مكتوب % 44(@)(@@) % لا تذهبن اليوم في ذلة % فاليوم من عمرك محسوب % 45(@)(@@) % و إن جهدت النفس في مكسب % فالمجد إن المجد مكسوب % 46(@)(@@) % جد ابن أيوب ولو قد ونى % % كفاه ما شيد أيوب % 47(@)(@@) % رأى رويد السير عجزا به % % فسيره حضر وتقريب % 48(@)(@@) % سما إلى المجد فقال العدا % % له طريق فيه ملحوب % 49(@)(@@) % ساد طرير الماء حتى انتهى % % و الشيب في فوديه ألهوب % 50(@)(@@) % و الرمح لا يذرع إلا إذا % % تكاملت فيه الأنابيب % PageV01P212 51(@)(@@) % أضحى وزير الدين ذا مغرم % وزارة الدنيا وتعذيب % 52(@)(@@) % رتبة عز فخرها عاجل % و أجرها ذخر وتعقيب % 53(@)(@@) % ما هجمت غشما ولا ضره % % تدرج فيها وترتيب % 54(@)(@@) % وزارة ما زال من قومه % % معرق فيها ومنسوب % 55(@)(@@) % أبنا عباس و أيوب مذ % % تفرعوا رب ومربوب % 56(@)(@@) % خلائف الله وأنصارهم % % فصاحب طاب ومصحوب % 57(@)(@@) % لا ودهم غل ولا حبلهم % يوما بغدر الكف مقضوب % 58(@)(@@) % جارهم يؤكل في جورهم % % و ما لهم بالإفك منهوب % 59(@)(@@) % و ما على مقص سواكم إذا % % أدناكم في الرأي تثريب % 60(@)(@@) % لا تلكم العادات منكم ولا % % أسلوبكم تلك الأساليب % PageV01P213 61(@)(@@) % باسم عميد الرؤساء الذي % % ما زاد في معناه تلقيب % 62(@)(@@) % رد عليها بعد ما أيمت % أبناؤها الغر المناجيب % 63(@)(@@) % اكف الذي استكفوك واحمل لهم % % ما تحمل الصم الأهاضيب % 64(@)(@@) % ململم الجنب أمين القوى % % و كلهم أدبر مجلوب % 65(@)(@@) % و قد أعاديك بأرسانهم % % قسرا 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms66# فمركوب ومجنوب % 66(@)(@@) % و ارتع من الدولة في ظلة % رواقها بالعز مطنوب % 67(@)(@@) % محمية الروضة مرقية % % و الروض بالرعيان مسلوب % 68(@)(@@) % أفياؤها فيح وماء الحيا % % في ظلها السابغ مسكوب % 69(@)(@@) % و اصحب من النيروز يوما يفي % % بالعز إن خان الأصاحيب % 70(@)(@@) % يكر بالإقبال ما خولفت % صدور دهر وأعاقيب % PageV01P214 71(@)(@@) % يغشاكم يخدم إقبالكم % % ما حن للفرجة مكروب % 72(@)(@@) % لا تستجيرون بعمرو ولا % % واعدكم بالعمر عرقوب % PageV01P215 البحر : - 1(@)(@@) % من ناظر لي بين سلع و قبا % كيف أضاء البرق أم كيف خبا % 2(@)(@@) % نبهني وميضه ولم تنم % عيني ولكن رد عقلا عزبا % % 3(@)(@@) % قرت له بنات قلبي خافقا % % و استبردته أضلعي ملتهبا % % 4(@)(@@) % كأنه يجلو ثنايا بالغضا % % روقا وينهل لمى أو شنبا % % 5(@)(@@) % يا لعبد من منى دنا به % % يوهمني الصدق بريق كذبا % % 6(@)(@@) % و لنسيم سحر بحاجر % ردت به عهد الصبا ريح الصبا % % 7(@)(@@) % ألية ما فتح العطار عن % % أعبق منه نفسا وأطيبا % % 8(@)(@@) % سل من يدل الناشدين بالغضا % % على الطريد ويرد السلبا % % 9(@)(@@) % أراجع لي والمنى هلهلة % فطالع نجم زمان غربا % % 10(@)(@@) % و طوفة بين القباب بمنى % لا خائفا عينا ولا مرتقبا % % PageV01P216 11(@)(@@) % مستقبلا بهاهنا وهاهنا % % مقترعا على أو مجتذبا % % 12(@)(@@) % ألقى الوصال مسفرا لي وجهه % و الغدر لي مع قبحه متنقبا % % 13(@)(@@) % هناك من باع الغواني حلمه % بالخرق عد الحازم المجربا % % 14(@)(@@) % و لائم ملتفت عن صبوتي % % ينكرها ولو أحب لصبا % % 15(@)(@@) % إذا نسبت بهواي ساءه % % مصرحا ولو كنيت غضبا % % 16(@)(@@) % و ما عليه أن غرمت بابلا % % بحاجر و فاطما بزينبا % % 17(@)(@@) % يلومني لا مات إلا لائما % % أو عاش عاش بالهوى معذبا % % 18(@)(@@) % قال عشقت أشيبا يعدها % % منقصة نعم عشقت أشيبا % % 19(@)(@@) % هل شعر بدلته بشعر % مبدلي من أرب لي أربا % % 20(@)(@@) % أبى الوفاء والهوى وبالغ % معذرة من سيم غدرا فأبى % % PageV01P217 21(@)(@@) % ما أنا من صبغة أيامكم % و لا الذي إن قبلوه انقلبا % % 22(@)(@@) % و لا ابن وجهين ألم حاضرا % % من الصديق وألوم الغيبا % % 23(@)(@@) % قلبي للإخوان شطوا أو دنوا % % و للهوى ساعف دهر أو نبا % % 24(@)(@@) % من عاذري من متلاش كلما % % أذنب يوما وعذرت أذنبا % % 25(@)(@@) % يضحك في وجهي ملء فمه % و إن أغب وذكر اسمي قطبا % % 26(@)(@@) % يطير لي حمامة فإن 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms67# رأى % % خصاصة دب ورائي عقربا % % 27(@)(@@) % ما أكثر الناس وما أقلهم % % و ما أقل في القليل النجبا % % 28(@)(@@) % ليتهم إذ لم يكونوا خلقوا % % مهذبين صحبوا المهذبا % % 29(@)(@@) % فعلمتهم نفسه كيف العلا % % و وده كيف الصديق المجتبى % % 30(@)(@@) % و وردوا من خلقه ويده % أبرد ما بل الصدى وأعذبا % % PageV01P218 31(@)(@@) % مثل أبي المنصور فلتلذ لي ال % % دنيا ولا سر سواه ابن أبا % % 32(@)(@@) % أتركه لي غنيمة باردة % يا دهر واذهب ببنيك سلبا % % 33(@)(@@) % الله جار لفتى أجارني % % على زمان لم أفته هربا % % 34(@)(@@) % و فرجت عني يدا إسعاده % حوادثا ضغطنني ونوبا % % 35(@)(@@) % لما رأى الأيام في صروفها % % نارا تشب ورآني حطبا % % 36(@)(@@) % قام لها يصلي بها وناشني % % فلم أذق حدا لها ولا شبا % % 37(@)(@@) % و صان وجهي لاقيا بوجهه % % ذل السؤال وكفاني الطلبا % % 38(@)(@@) % عفت فلم أشرب سوى أخلاقه % % إذا كؤس الشرب دارت نخبا % % 39(@)(@@) % و صح لي جوهرة من معدن % أملس لا ينبت إلا الذهبا % % 40(@)(@@) % من معشر تنمى العلا اليهم % هم أهلها والناس منها غربا % % PageV01P219 41(@)(@@) % كما اقترحت حربهم وسلمهم % % شدوا رباط الخيل أو شدوا الحبا % % 42(@)(@@) % ساسوا يعدون الملوك واحتبوا % % وسط الندى يصفون العربا % % 43(@)(@@) % يرضيك من حديثهم ساهدهم % % و في القديم ما سألت الكتبا % % 44(@)(@@) % إذا رجال طأطأ اللؤم بهم % % قعصا فشموا بالأنوف الركبا % % 45(@)(@@) % طالوا ينالون ثعالب القنا % % تحسب ماشيهم بسوقا ركبا % % 46(@)(@@) % و حدثت فروعهم عن أصلهم % % تحدث الناجم عما غربا % % 47(@)(@@) % لبيك مشكورا كما لبيتني % % و قد دعوت قذفا لا كثبا % % 48(@)(@@) % و كنت لي بابا إلى مطالبي % % لولا قعود الحظ بي وسببا % % 49(@)(@@) % تعجب الناس وقد وليتها % % أكرومة فقلت لا لا عجبا % % 50(@)(@@) % عيني مني ويدي فهل ترى % % يفوتني ما سلما ما طلبا % % PageV01P220 51(@)(@@) % و كيف لا تحفزه لأربي % % مودة تمت فعادت نسبا % % 52(@)(@@) % و مقة لو خلصت لابن أبي % % منى هز عطفه وطربا % % 53(@)(@@) % و إن يكن هوم فيها ناسيا % % و عاج عن طريقها وجنبا % % 54(@)(@@) % و قدحت في أملي عندهم % قادحة لم يك فيها مذنبا % % 55(@)(@@) % فقد قبلت العذر أو قتلته % علما وقد عاتبته فأعتبا % % 56(@)(@@) % و استقبل الرأي وأعطى ذمة % تصفح للآنف عما ذهبا % % 57(@)(@@) % فاشكر لها وكالة مني على % % نفسي واقض 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms68# دينها إذ وجبا % % 58(@)(@@) % من لك مثلي بأخ مسامح % ترضيه بالعذر إذا ما غضبا % % 59(@)(@@) % و احذر على مجدك أخرى تنتقي % % عظم الوفاء وتجر الريبا % % 60(@)(@@) % شمر عن الساقين في استداركها % % و امح بوادي شرها معتقبا % % PageV01P221 61(@)(@@) % و لا يزال أملي يقنع لي % % بدون ما سد خصاصي نشبا % % 62(@)(@@) % ذاك ودعني شاكيا وسائلا % % و خذ حديثي منسبا % % 63(@)(@@) % كان جناح الشوق أمس طائري % % منسرا في كبدي مخلبا % % 64(@)(@@) % و أكل البين سمين جلدي % % حتى غدا سنام صدري ذنبا % % 65(@)(@@) % بان بك العيش الذي يسرني % % و عاد لما عدت لي مقتربا % % 66(@)(@@) % قال البشير قادما فقلت من % قال أبو منصور قلت مرحبا % % 67(@)(@@) % و قمت لا أملك ما يسعه % غير نعمت من جزاء وحبا % % 68(@)(@@) % أرشف من فيه مكان اسمك لا % % أحسبني أرشف إلا الضربا % % 69(@)(@@) % عطف من الأيام لي ونظر % جاء وما كنت له محتسبا % % 70(@)(@@) % لكنني بالبعد في أثنائه % % أصبح أو أمسى مروعا متعبا % % PageV01P222 71(@)(@@) % إذا اطمأنت أضلعي تذكرت % نواك فاهتزت جوى لا طربا % % 72(@)(@@) % فادفع به صدرك ما استطعته % يوما ترد شمل أنسى شعبا % % 73(@)(@@) % راخ يديك في امتداد حبله % و طاول الوقت به أن يجذبا % % 74(@)(@@) % و خف على قلبي غدا من وقفة % يكون لي فيها الوداع العطبا % % 75(@)(@@) % و لا تدعني أسأل الركبان عن % % قلب دو وأستطب الكتبا % % 76(@)(@@) % لا أقفرت منك ربوع عمرت % أنسا ولا أيبس عيش رطبا % % 77(@)(@@) % و لا برحت مالكا مقتسرا % % نواصي الإقبال أو مغتصبا % % 78(@)(@@) % حتى يكون باديا وحاضرا % % بين النجوم بانيا مطنبا % % PageV01P223 البحر : - 1(@)(@@) % أبلغ بها أمنية الطالب % فالرزق بين الردف والغارب % 2(@)(@@) % و لا تذمم لوجاها فما ال % % راحة يوما في مطا اللاغب % 3(@)(@@) % ليلتها في الدائب المنتقي % % بغامها في السارح العازب % 4(@)(@@) % حداؤها في الركب أحظى لها % % من نعقة الراعي أو الراكب % 5(@)(@@) % فاوت بين الطير حالاتها % % من باطش أو فرق هائب % 6(@)(@@) % فالخسف للجاثم في وكره % و الخصب للقاطع والكاسب % 7(@)(@@) % أفلح من داوس طرق العلا % % موفقا للسنن اللاحب % % 8(@)(@@) % تعجبه الفضلة في ماله % % ما لم تشبها منة الواهب % % 9(@)(@@) % ذلك في المولى غدا في العدا % % مثلبة فاسدد فم الثالب % 10(@)(@@) % خوفي من العائب لي نجوة % من الأذى 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms69# تشكر للعائب % PageV01P224 11(@)(@@) % و الناس أصحابي ما لم تمل % و سوق أثقالي على صاحب % 12(@)(@@) % أكون ما استغنيت عن رفدهم % % جلدة بين العين والحاجب % % 13(@)(@@) % فإن عرت أو حدثت حاجة % فالحبل ملقي على الغارب % 14(@)(@@) % و كم أخ غيره يومه ال % % مقبل عن أمس به الذاهب % % 15(@)(@@) % كنت وإياه زمان الصدى % % كالماء والقهوة للشارب % 16(@)(@@) % و مد باعيه فخلى يدي % % نهبا لكف القابض الجاذب % 17(@)(@@) % مر فلم يعطف لحب الصبا ال % % جاني ولا حق العلا الواجب % 18(@)(@@) % كأن ما أحكمت من وده % أبرمته للمسحل القاضب % 19(@)(@@) % الله للمغصوب فيكم على % % ديونه يا شيعة الغاصب % 20(@)(@@) % قد قلت للخابط خلف المنى % % مباعدا قارب بها قارب % PageV01P225 21(@)(@@) % احبس مطاياك فما في السرى % % إلا جنون الطمع الكاذب % 22(@)(@@) % لا تطلبن الرزق من معدن % ينبوعه غير أبي طالب % 23(@)(@@) % فالبحر من خلفه خلفه % لم يقتنع بالوشل الناضب % 24(@)(@@) % خاطر في المجد فغالي فتى % لم يخش منه قمرة الغالب % 25(@)(@@) % و كاثر الناس بإحسانه % فلم يحزه عدد الحاسب % 26(@)(@@) % إذا احتبى ينسب علياءه % % دار عليه قطب الناسب % 27(@)(@@) % ضم إلى ما كسبت نفسه % سالفة في عرقه الضارب % 28(@)(@@) % فظل لا يشرف من جانب % إلا دعاه الفخر من جانب % 29(@)(@@) % من معشر تضحك أيمانهم % % إن آد عام السنة الشاحب % 30(@)(@@) % تحلب أموالهم ثرة % و الضرع مبسوس على الحالب % PageV01P226 31(@)(@@) % لهم ندى شرق منهم % بكل مخطوب له خاطب % 32(@)(@@) % لا نائم السامر في الليلة ال % % طولي ولا متقر الآدب % 33(@)(@@) % هم وزروا الدولات واستنصحوا % % رعيا على العاطف والسارب % 34(@)(@@) % و هم سيوف الخلفاء التي % % تعلم الضرب يد الضارب % 35(@)(@@) % غاروا نجوما ووفت بابنهم % % شهادة الطالع للغارب % % 36(@)(@@) % حذا وزادته قوى نفسه % و المجد للموروث والكاسب % 37(@)(@@) % زيادة البدر بشعاعة % على ضياء الكوكب الثاقب % 38(@)(@@) % ليت عيونا لهم في الثرى % % مغضوضة بالقدر اللازب % 39(@)(@@) % تراك في رتبتهم جالسا % % تأمر في العارض والراتب % 40(@)(@@) % حتى يقر الله منها الذي % % أقذي بالرامس والتارب % PageV01P227 41(@)(@@) % قد عرف القائم بالأمر مذ % % سلك أن القطع للقاضب % 42(@)(@@) % ظهرت بالعفة سلطانه % هذا وما الزاهد كالراغب % 43(@)(@@) % و صنت ما حسن من ذكره % عن دنس القادح والقاصب % 44(@)(@@) % فلا تزل عندك من طوله % ما عنده من رأيك الصائب % 45(@)(@@) % و 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms70# لا خلا دستك من مركب % غاش ومن راج ومن هائب % 46(@)(@@) % و دام لي منك ربيعي الذي % % يرضي رياضي بالحيا الساكب % 47(@)(@@) % و جنتي الحصداء إن صاح بي % % دهري لا سلم فقم حارب % 48(@)(@@) % ما لي في فقري إلى ناصر % سواك من أحمى به جانبي % % 49(@)(@@) % في ودك استبليت ثوب الصبا % % و فيه أنضو بردة الشائب % 50(@)(@@) % قلبي لك المأمون تقليبه % ما قام ريان على مارب % PageV01P228 51(@)(@@) % أبيض ثوب الود صاف على % % لونيه من راض ومن عائب % 52(@)(@@) % و كلما أنسيتم صحبتي % % ذكرنيكم زمن الصاحب % 53(@)(@@) % و خردا أرسلتها شردا % من حابل منكم ومن حائب % 54(@)(@@) % كل فتاة مع تعنيسها % % تفضح حسن الغادة الكاعب % 55(@)(@@) % ضوافيا من فوق أعراضكم % % للمسدل المرخى وللساحب % 56(@)(@@) % سارت مع الشمس وعمت مع ال % % غيث فمن ذاك ومن هاضب % 57(@)(@@) % تعلق بالآذان موصولة % غشما بلا إذن ولا حاجب % 58(@)(@@) % تنصب أعلاما لكم سيرها % % في الأرض فلتشكر يد الناصب % 59(@)(@@) % كررت الأعياد أعدادها % % و المهرجانات على الحاسب % 60(@)(@@) % حتى لقد خافت بما أكثرت % ملالة القارئ والكاتب % PageV01P229 البحر : - 1(@)(@@) % لك الغرام وللواشي بك التعب % و كل عذل إذا جد الهوى لعب % 2(@)(@@) % أما كفاه انصراف العين معرضة % عنه وسمع بوقر الشوق محتجب % 3(@)(@@) % و أن قلبا وأحشاء مدغدغة % إذا استقامت حمول الحي تضطرب % 4(@)(@@) % لاموا عليك فما حلوا وما عقدوا % % عندي وعابوا فما شقوا ولا شعبوا % % 5(@)(@@) % فكل نار هوى في الصدر كامنة % فاللوم يسعرها والعذل يحتطب % 6(@)(@@) % آها لوحشة ما بيني وبينكم % إذا خلت من دلاء الجيرة القلب % 7(@)(@@) % و عطت القور والأجراع نوقكم % طروح عيني وحالت بيننا الكثب % 8(@)(@@) % من اشتكى الشوق إذ هزت وسادته % مدامع تنتحي أو أضلع تجب % 9(@)(@@) % فما أسفت لشيء فائت أسفي % % من أن أعيش وجيران الغضا غيب % 10(@)(@@) % قد كنت أسرق دمعي في محاجره % % تطيرا بالبكى فاليوم أنتحب % PageV01P230 11(@)(@@) % لا يبعد الله قلبا ظل عندكم % لم يغنني عنه نشدان ولا طلب % 12(@)(@@) % سلبتموه فلم تفتوا برجعته % % و ربما رد بعد الغارة السلب % 13(@)(@@) % فأين إذمامكم قبل الفراق له % % ألا يضام ولا تمشي له الريب % 14(@)(@@) % أسيرة لكم في الغدر حادثة % تخص أم رجعت عن دينها العرب % 15(@)(@@) % يا أهل ودي 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms71# وما أهلا دعوتكم % بالحق لكنها العادات والدرب % 16(@)(@@) % كابها نتسمى قبل غدركم % فاليوم كل اسم ود بيننا لقب % 17(@)(@@) % أشبهتم الدهر في تلوين صبغته % فكلكم حائل الألوان منقلب % 18(@)(@@) % كنتم علي مع الأيام إخوتها % % و ليس إلا عقوقي بينكم نسب % 19(@)(@@) % صبرا وإن كان ملبوسا على جزع % ظلمت والصابر المظلوم محتسب % 20(@)(@@) % لعل عازب هذا الحظ يرجع لي % % يوما وقاعد هذا الجد بي يثب % PageV01P231 21(@)(@@) % و ليت أن كمال الملك خالصة % آراؤه لي ورأي الناس مؤتشب % 22(@)(@@) % بل ليت أن قضاياه مواهبه % فكان إنصافه في عرض ما يهب % 23(@)(@@) % فتى قنعت به من بين من حملت % خوص الركاب فسارت تنقل الركب % 24(@)(@@) % أحببته حب عيني أختها ويدي % % يدي ولي في مزيد منهما أرب % 25(@)(@@) % و كان لي حيث لا جفن لناظره % حفظا وصونا ولا تحمي الظيا القرب % 26(@)(@@) % عطفا لحقي وإسبالا على ذممي % % كأنه وهو مولى في الحنو أب % 27(@)(@@) % يرعى شوارد فيه لم تسر معها % % ريح ولا طمعت في شأوها السحب % 28(@)(@@) % فغالبتني على ذاك المكان يد % للدهر كان لها مذ ملني الغلب % 29(@)(@@) % ملالة لم تطر فيها مطاولة % و بغضة كالتجني ما لها سبب % 30(@)(@@) % قسا فأصبح للواشين بي أذنا % تليق ما اختلفوا عني وما اجتلبوا % % PageV01P232 31(@)(@@) % لو قيل إني سرقت السمع أو صرفوا % % إلي تبديل دين الله أو نسبوا % % 32(@)(@@) % لما امترى أن رسل الله بي جبهوا % % بالرد أو حرفت على أمري الكتب % 33(@)(@@) % فقل له طيب الله الوفاء له % % و الحق يسفر والبهتان ينتقب % 34(@)(@@) % يا ناقد الناس كشفا عن جواهرهم % % متى تغير عن أعراقه الذهب % 35(@)(@@) % و كيف أفسد سوء الحظ خبرك بي % % حتى بدا لك أن الدر مخشلب % 36(@)(@@) % أغير أن فراشا طار ينأم بي % % لو شئت كان بنار الرد يلتهب % 37(@)(@@) % أبعد أن رضتني عشرين أو صعدت % لا الجري تنكره مني ولا الجنب % 38(@)(@@) % يروى لك الخرق عن حزمي فتقبله % % صفحا ويحذبك الواشي فتنجذب . % 39(@)(@@) % حاشاكم أن تكونوا عون حادثة % أو ترتميني على أيدكم النوب % 40(@)(@@) % أذنبي الحب والإخلاص عندكم % فإن ذنبي إلى أيامي الأدب % PageV01P233 41(@)(@@) % أما وقومك والمجد التليد لهم % % إذا حلفت بهم والدين والحسب % 42(@)(@@) % ما خلت والدهر 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms72# لا تفنى عجائبه % أن العلا نافق في سوقها الكذب % 43(@)(@@) % و لا عجبت لدهري كيف يظلمني % % و إنما ظلمكم أنتم هو العجب . % 44(@)(@@) % يا من به صح سقم العيش واجتمعت % على توحده الأحزاب والشعب % 45(@)(@@) % و من كفى الملك ما لم يكف صارمه % و رد عنه الذي ما رده اليلب % 46(@)(@@) % و من توسط أفق المجد فاعتدلت % به البدور ولبت أمره الشهب % 47(@)(@@) % على بساطك تقضى كل مبهمة % يعنو بها الخطب أو تعيا بها الخطب % 48(@)(@@) % و هالة البدر دست أنت راكبه % % و تارة هو غاب الضغيم الأشب % 49(@)(@@) % بشر وقور وجد ضاحك ورضا % لولا الطلاقة خلنا أنه غضب % 50(@)(@@) % جرى بك الخلق الفضفاض وانقبضت % بك المهابة فالسلسال واللهب % PageV01P234 51(@)(@@) % و أفقرتك العطايا والثناء غنى % و أنصبتك العلا والراحة النصب % 52(@)(@@) % من عنده نشب لا مجد يعضده % فإن عندك مجدا ما له نششب % 53(@)(@@) % حللت باسمك عقد الرزق فاندفعت % عراه تفصم لي عفوا وتنقضب % 54(@)(@@) % و كنت واسطة العقد الذي انتظمت % عنه السلوك ولم تخدش به الثقب % 55(@)(@@) % أنتم رفادة ظهري إن وهي جلدي % % و درة العيش لي والضرع معتصب % 56(@)(@@) % و مشربي العد والغدران غائرة % منكم لي الحوض أو منكم لي القرب % 57(@)(@@) % قدمتموني فلي رهن السباق ومن % يلزني بعد مجنوب ومعتقب % 58(@)(@@) % عزى بنفسي ولكن زادني شرفا % % أني اليكم إذا باهلت أنتسب % 59(@)(@@) % و الناس غيركم من لا يجاوزني % % أبياته عمد تبنى ولا طنب % 60(@)(@@) % إذا صفوتم فلا وردي ولا صدري % % منهم وإن أملحوا يوما وإن عذبوا % % PageV01P235 61(@)(@@) % لي منكم الجبهة الغراء والعتق ال % % تلعاء والناس بعد الرسغ والذنب % 62(@)(@@) % فلا تنلني الليالي فيكم بيد % إلا التباب لها والشل والعطب % 63(@)(@@) % و لا تصبكم عيون الدهر إن لها % % إلى الكمال لحاظا سهمها غرب % 64(@)(@@) % و إن أتى رائد النيروز مجتديا % أيمانكم فالروابي الخضر والعشب % 65(@)(@@) % فمن جباهكم نور الربيع لنا % % و من أكفكم الأنواء تنسكب % 66(@)(@@) % يوم يكر به إقبال جدكم % غدا على ملككم ما كرت الحقب % 67(@)(@@) % تجلون من حسنه حظ العيون فلل % % أشعار فيكم حظوظ السمع والطرب % 68(@)(@@) % فما بقيتم فأيامي بعزكم % كما أحب وأحوالي كما يجب % PageV01P236 البحر : - 1(@)(@@) % إذا فاتها روض الحمى 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms73# وجنوبه % كفاها النسيم البابلي وطيبه % 2(@)(@@) % و كم حب من واد إلى العيش مجدب % و أبغض مثرى آخر وخصيبه % 3(@)(@@) % و ما الجانب المسكون إلا وفاقه % هوى النفس لا خضراؤه وعشيبه % 4(@)(@@) % فدعها تلس العيش طوع قلوبها % % فأمرع ما ترعاه ما تستطيبه % 5(@)(@@) % و إن الثماد البرض في عز قومها % % لأنقع من جم يدل غريبه % 6(@)(@@) % و أشبعها ألا تكون طرائدا % % إذا شل من سرح المسيم عزيبه % 7(@)(@@) % و أن كان حيا بالحمى إن توفرت % من الوجد مبرى دائها وطيبه % 8(@)(@@) % و كل هلال ذو الأراك حجابه % يسر البدور الطالعات مغيبه % 9(@)(@@) % تحول الرماح العامرية دونه % % فيقظ راجيه ويعيا طليبه % 10(@)(@@) % و أتعب من حاولت يا قلب وصله % حبيب سنان السمهري رقيبه % PageV01P237 11(@)(@@) % يصيب بعيدا سهمه كل من رمى % % و ترميه أيد حوله لا تصيبه % 12(@)(@@) % يلوم على نجد ضنين بدمعه % إذا فارق الأحباب جفت غروبه % 13(@)(@@) % و هل طائل في أن يكثر عذله % % إذا قل من إصغاء سمعي نصيبه % 14(@)(@@) % و ما الناس إلا من فؤادي فؤاده % لأهل الغضا أو من حبيبي حبيبه % 15(@)(@@) % سأرعى الذي بيني وبين ملون % شربت على صفوى له ما يشوبه % 16(@)(@@) % خذيني بغير الغدر خلقا وإن جنى % % على الوفاء قرفه وندوبه % 17(@)(@@) % فذلك طين الأرض لم تبن فطرتي % % عليها وما ماء سقاني قليبه % 18(@)(@@) % خلقت يدا دون الصديق وجنة % يرد بها عن صدره ما ينوبه % 19(@)(@@) % ركودي إلى الجو العريض ركوده % إذا رام أمرا أو هبوبي هبوبه % 20(@)(@@) % و أصفح عنه عاذرا متأولا % % و إن كثرت زلاته وذنوبه % PageV01P238 21(@)(@@) % و يقنعني منه ظهارة وجهه % فلا أسأل التفتيش كيف مغيبه % 22(@)(@@) % و من طال عن خبر الأخلاء بحثه % ليبلوهم لم يخل مما يريبه % 23(@)(@@) % دعيني يكن خصمي زماني وحده % و تكفيك لي أحداثه وخطوبه % 24(@)(@@) % هو الطرف غرت رحلتي خطواته % و زمت فكان الليث صعبا ركوبه % 25(@)(@@) % أصافح من كفيه صل خديعة % لغير التحايا أهله ورحيبه % 26(@)(@@) % و لولا رجال هم أساة جروحه % جرت بدمي أظفاره ونيوبه % 27(@)(@@) % لتسق بني عبد الرحيم أكفهم % % فأروى الحيا وكافه وصبيبه % 28(@)(@@) % و ما السيل ذو الدفاع يرغو جفاؤه % % بأمرع من واد نداهم يصوبه % 29(@)(@@) % هم القاتلون 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms74# الأزم والعام مسنت % يقطب في وجه المسيم جدوبه % 30(@)(@@) % و هم إن شكا الفضل الغريب انفراده % % قبائله دون الورى وشعوبه % PageV01P239 31(@)(@@) % ملوك على الأيام بيت علائهم % % تناط بأعناق النجوم طنوبه % 32(@)(@@) % ربا الملك طفلا ناشئا في حجورهم % % و أشيب هذا الدهر بعد ربيبه % 33(@)(@@) % لهم تاجه المعصوب أيام تاجه % و فيهم أخيرا سيفه وقضيبه % 34(@)(@@) % مواريث فيهم نصها إن مضى أب % يسد الذي سد ابنه وينوبه % 35(@)(@@) % و أمواتهم فيهم كأحياء غيرهم % % إذا ظلع المركوب جاء جنيبه % 36(@)(@@) % إذا ما زعيم الدين حدث عنهم % توارد شبان الفخار وشيبه % 37(@)(@@) % هو البلجة البيضاء في وجه عزهم % % إذا شان عز القوم بابن شحوبه % 38(@)(@@) % يرى نصرهم ما سار من حسن ذكرهم % % فتنشره أفعاله وتطيبه % 39(@)(@@) % فتى كملت فيه أداة اكتهاله % و غصن الصبا لم يعس بعد رطيبه % 40(@)(@@) % تحمل أعباء الرياسة ناهضا % % فما لان من عرض الرجال صليبه % PageV01P240 41(@)(@@) % و من عجب أن البكار جليدة % و قد عقرت بزل الطريق ونيبه % 42(@)(@@) % و كم سابق فيهم ولم يحف رسغه % و لا ابتل في شوط الرهان سبيبه % 43(@)(@@) % و من منجب فيه أبوه وأمه % و ما ولد الإنسان إلا نجيبه % 44(@)(@@) % لهم يوم يحتد الجلاد كميه % و يوم الترامي بالكلام خطيبه % 45(@)(@@) % فلا محفل إلا وفيهم صدوره % و لا جحفل إلا وفيهم قلوبه % 46(@)(@@) % أبا حسن باهل بهن فضائلا % % لحاسدها حر الجوى ولهيبه % 47(@)(@@) % يعيبك مثني على الغيظ صدره % خوافقه تزوى به ووجيبه % 48(@)(@@) % و كيف ينال العيب أطراف ماجد % محاسن أبناء الزمان عيوبه % 49(@)(@@) % و قال وهل في الناس من هو فوقه % % فقلت نعم . إن كان فيهم ضريبه % 50(@)(@@) % كريم إذا ما ظل يقسم ماله % فانزره مستقسما ما يصيبه % PageV01P241 51(@)(@@) % يحب ثراء المال حبا لبذله % % و ليس كسوب المال إلا وهوبه % 52(@)(@@) % أطلت يدي بالنصر في نيل مطلبي % % فأصبح لي أقصاه وهو قريبه % 53(@)(@@) % و أمكنتني من ظهر حظي وعرفه % فأسمح لي بعد الشماس ركوبه % 54(@)(@@) % و أغنيتني عن كل مرعى أروده % و فج على تيه الطريق أجوبه % 55(@)(@@) % و كم جمد الرزق البطيء على يدي % % فسلسلت من كفيك ماء يذيبه % 56(@)(@@) % و لا خلف إلا من عصابك دره 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms75# % و لا جفر إلا من نداك ذنوبه % 57(@)(@@) % إذا روعت سرحي من الدهر روعة % زأرت فلم يعسل من الخوف ذيبه % 58(@)(@@) % فقد صار يحبوني الذي ما سألته % و يخطب مني المدح من لا أجيبه % 59(@)(@@) % فلا يخب من نعماك بدر أضاء لي % % زماني ولا نجم هداني ثقوبه % 60(@)(@@) % و لا تتغير من وفائك عادة % يرى المجد في أثنائها ما يعيبه % PageV01P242 61(@)(@@) % و لا برحت تطرو اليك شوارد % يلين لها وعر الفلا وسهوبه % 62(@)(@@) % مطبقة ما طبق الأفق سيرها % % بوصفك مسرى ليلها وذؤوبه % 63(@)(@@) % من الكلم السهل المنيع مرامعة % على الناس والنزر الكثير عجيبه % 64(@)(@@) % ترقرق حسنا فامترى كل سامع % % به وهو مخلوب الفؤاد طروبه % 65(@)(@@) % أسربل منه المهرجان مفاضة % يصان بها عريانه وسليبه % 66(@)(@@) % ينوبان من ناديك أمنع جانب % و أنضر ربع غضه وقشيبه % 67(@)(@@) % مدى الدهر ما هب النسيم لناشق % و دب على وجه الصعيد دبيبه % 68(@)(@@) % على شرط عز لا تحول رسومه % و سرح نعيم لا تراع سروبه % PageV01P243 البحر : - 1(@)(@@) % يا قلب من أين على فترة % رد عليك الولة العازب % 2(@)(@@) % أبعد أن مات شباب الهوى % % شاورك المحتنك الشائب % 3(@)(@@) % و بعد خمسين قضت ما قضت % و فضلة أغفلها الحاسب % 4(@)(@@) % هبت بأشواقك نجدية % مطمعة أنت لها واجب % 5(@)(@@) % ما أنت يا قلب وأهل الحمى % % و إنما هم أمسك الذاهب % 6(@)(@@) % لم تذكر الغائب من عهدهم % % إلا لأن يأكلك الغائب % 7(@)(@@) % قد وعظت واعظة من جحا % % بوعظها ما زهد الراغب % 8(@)(@@) % فاردد على الريح أحاديثها % % ففي صباها ناقل كاذب % 9(@)(@@) % جاءت وقد أفرقت تهدي الصبا % % لا سلم المجلوب والجالب % 10(@)(@@) % و دون نجد وظباء الحمى % % أن نفرع المنسم والغارب % PageV01P244 11(@)(@@) % و الفيلق الشهباء من عامر % و الطاعنالغيران والضارب % 12(@)(@@) % و الشمس أدنى من تميمية % طالعها من رامة غارب % 13(@)(@@) % لو سبقت بالغدر في قومها % % لما وفي في قوسه حاجب % 14(@)(@@) % مكنونة بيضاء لم يعدها % % في البدو لون العرب الشاحب % 15(@)(@@) % إن وصفت تيمها وصفها % % أو نسبت أعجبها الناسب % 16(@)(@@) % فلا تغرنك تفاحة % منها ولا بارقة خالب % 17(@)(@@) % يا راكب الأخطار تهوى به % % انزل كفيت السير يا راكب % 18(@)(@@) % مالك والراحة قد أمكنت % تشقى بما أنت له طالب % 19(@)(@@) % قد 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms76# آن أن يعفى الكليل المطا % % و أن يراح النصب اللاغب % 20(@)(@@) % إن المقيم اليوم في غبطة % يحسدها السارح والسارب % PageV01P245 21(@)(@@) % قد أربع الوادي ببغداد واب % % تل الثرى واتسع الجانب % 22(@)(@@) % أظلها من سحب أيدي بني % % عبد الرحيم الهاطل الهاضب % 23(@)(@@) % و رجعت طالعة شمسهم % % فيها وعاد الكوكب الثاقب % 24(@)(@@) % إلى عميد الدولة استرجع ال % % نافر أنسا وأوى الهارب % 25(@)(@@) % عم وسوى عادلا جوده % حتى استوى المحروم والكاسب % 26(@)(@@) % طبق في التدبير أغراضه % سهما فسهما رأيه الصائب % 27(@)(@@) % و أدب الأيام بالحلم وال % % جهل على أخلاقها غالب % 28(@)(@@) % و الملك سرح نام رعيانه % و هب يطغى ذئبه السارب % 29(@)(@@) % كانت جحيما ترتمي بالأذى % % في جانبيها الشرر اللاهب % 30(@)(@@) % فأخمدت هيبته كل ما % % هب عليها الموقد الحاطب % PageV01P246 31(@)(@@) % صب عليها الدم لما غدت % بالماء لا يطفئها الساكب % 32(@)(@@) % فهامة ساقطة فوقها % % حصدا وجنب حولها واجب % 33(@)(@@) % عشواء خطب لم يكن ينجلي % % حتى يؤوب القمر الغائب % 34(@)(@@) % يا شرف الدين تمدح بها % % فالعجب في أمثالها واجب % 35(@)(@@) % ما زال تنكيلك بالمجرم ال % % مصر حتى خافك التائب % 36(@)(@@) % صدع من الدنيا تداركته % لولاك ما كان له شاعب % 37(@)(@@) % جاذبه الناس يرومونه % دهرا فلم يعلق به جاذب % 38(@)(@@) % لا العاجز الواني تأنى له % % منهم ولا المجتهد الدائب % 39(@)(@@) % سللت بالعادة في جسمه % % رأيا هو الصمصامة القاضب % 40(@)(@@) % قد ظهرت راية أيامكم % % و طبق الأرض بها الجائب % PageV01P247 41(@)(@@) % و جمع الألسن تفضيلكم % % فاصطلح المادح والثالب % 42(@)(@@) % لا يصلح الأمر على غيركم % % لا عارض منه ولا راتب % 43(@)(@@) % و لا تدر المال أخلافه % و غير أيديكم له حالب % 44(@)(@@) % وزارة مجلسها منصب % له اصطفاك الله والناصب % 45(@)(@@) % أنت لها فاشدد يمينا بها % % الأخ وابن العم والصاحب % 46(@)(@@) % فإن تعزلت وفارقتها % % أو ناب في تدبيرها نائب % 47(@)(@@) % كان فراقا لك تسديده % و للأعادي سهمه الخائب % 48(@)(@@) % بعدت فانحض الذي رشته % و انقبض السائم والسارب % 49(@)(@@) % فاعطف على الدنيا وما قد جرى % % به عليه القدر اللازب % 50(@)(@@) % فالليث لا يغمز في زأره % % و إن ألح النابح الواثب % PageV01P248 51(@)(@@) % في جلده ذمي وفي عظمه % مظفر في عزكم خالب % 52(@)(@@) % مشى بها الماشي إلى حتفه % % يا بؤس ما أعقبه العاقب % 53(@)(@@) % يا باسطا من كفه 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms77# مزنة % يبسم منها البلد القاطب % 54(@)(@@) % و من حمى الأرض فما فوقها % % للخوف مسلوب ولا سالب % 55(@)(@@) % و المصطفى المحبوب من ماله % % يخبط فيه العائث الناهب % 56(@)(@@) % أغنيتني عن كل غرارة % سحابها المصعق والحاصب % 57(@)(@@) % و كل مبذول الحمى بابه % و اللؤم عن أمواله حاجب % 58(@)(@@) % لا يخلق الخجلة في وجهه % % لا مادح أثنى ولا عائب % 59(@)(@@) % و صنت وجهي بعد ما شفني % % من مائه المنزف والناضب % 60(@)(@@) % و خلطتني منك نعمى بها % % شجرني في بيتك الناسب % PageV01P249 61(@)(@@) % و حطتني أمنا وقد ثار لي % % بالشر صل الرملة الواقب % 62(@)(@@) % كلب أتى الليث فأغراه بي % % و قال وهو الفاجر الكاذب % 63(@)(@@) % وغد دعي ليس من شكله % % ما هو كاس باسمه كاسب % 64(@)(@@) % أعداه من مهنة آبائه % عرق إلى اللؤوم به ضارب % 65(@)(@@) % و لم يكن لو أنه كاتب % يراع منه الشاعر الكاتب % 66(@)(@@) % و عند شعري لو هجا مثله % لعرضه القاصم والقاصب % 67(@)(@@) % فابق لأن ترغم لي أنفه % أنف لعمري أجدع تارب % 68(@)(@@) % و البس من الدولة فضفاضة % يسحب من أذيالها الساحب % 69(@)(@@) % و اقسم ليوم المهرجان الحيا % % وفدا فنعم الوافد الآئب % 70(@)(@@) % يوم لآبائك في حفظه % % عهد يراعى حقه الواجب % PageV01P250 71(@)(@@) % و اصبح بفخر طيره أيمن % % و في عداك البارح الناعب % 72(@)(@@) % ما غردت ورقاء أو دافعت % فتخاء عن أفراخها خاضب % 73(@)(@@) % و اسمع إذا شدت لها حبوتي % % أفصح ما فاه به خاطب % 74(@)(@@) % مرصوعة باسمك من خير ما % % لاث على مفرقه عاصب % 75(@)(@@) % عندك منها غرد مطرب % و عند من عاديته نادب % 76(@)(@@) % من معدن الجد ولكن ترى % % رقتها أني بها لاعب % 77(@)(@@) % لا رب غمدان وعى مثلها % % سمعا ولا من داره مارب % 78(@)(@@) % و امض مع العادة في مهرها % % على طريق نهجه لاحب % 79(@)(@@) % فما تطيب الأرض موهوبة % عندي لولا أنك الواهب % PageV01P251 البحر : - 1(@)(@@) % عزفت فما أدري الفتى كيف يرغب % و عفت فما أشكو القذى كيف يشرب % 2(@)(@@) % و روضني لليأس هجر مطامعي % % فبغض عندي الوفر وهو محبب % 3(@)(@@) % رأيت الغنى ما ند عني ففاتني % % فكيف يخاف الفوت من ليس يطلب % 4(@)(@@) % و أرضى عن الأقدار كيف تصرفت % % و غيري بالأقدار يرضى ويغضب % 5(@)(@@) % أأشري بعرضي رفد قوم معوضة 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms78# % و أشعر نفسي أن ذلك مكسب % 6(@)(@@) % فلا جر رزق غبطة وهو يجتدي % % و لا سد مال خلة وهو يوهب % 7(@)(@@) % هنئيا لرب الرائحات خلاصه % إذا ضافني مما يعق ويحلب % 8(@)(@@) % و من قودها لي في الصلاب ثنية % و بزلاء تعصي في القياد وتصحب % 9(@)(@@) % تركت لمعطي النائل الغمر نيله % و إني إلى ترك البخيل لأقرب % 10(@)(@@) % فلا المدح في المسنى الجواد أكده % % و لا اللحز المناع ذمي يرهب % PageV01P252 11(@)(@@) % و يظلمني المولى وفي في ناصر % و كفي فلا أشكو ولا أتعتب % 12(@)(@@) % إذا ذهبت بي رغبة عن تلاده % % طريقا فما لي عنه بالود مذهب % 13(@)(@@) % له خصبه دوني ولي نوطة به % % و عون على أيامه وهو مجدب % 14(@)(@@) % و للحب مني ما أمنت خيانة % محلة قلب قلما يتقلب % 15(@)(@@) % أجر الهوى مالان فضلة مقودي % % و يعسفني حينا فآبي وأجذب % 16(@)(@@) % و ما كلما فارقت أشرب دمعتي % % و لا كلما غنى الحمام أطرب % 17(@)(@@) % و كم ألفتني ظبية وهي فذة % فملت ولم أعطف وقد عن ربرب % 18(@)(@@) % أحب الوفاء محمسا ومغزلا % % و أصحبه فيما أجد وألعب % 19(@)(@@) % و أعطى يدي ما خلتني متفضلا % % و أمنعها ما خلت أني أرغب % 20(@)(@@) % فلو لقيت أيام دهري خلائقي % % لكانت على جهلاتها تتأدب % PageV01P253 21(@)(@@) % و لو أنها للسلم جانحة معي % % لكانت على الشحناء بي تتحبب % 22(@)(@@) % و كنت لها عذرا إلى كل ماجد % يرى أنها في حرب مثلي تذنب % 23(@)(@@) % و لكنها عجماء سيان عندها % % شدا جامل أو قال هجرا مؤنب % 24(@)(@@) % تشط بأحبابي الذين أودهم % % و تدنو بجار لا أحب فتقصب % 25(@)(@@) % و لو أنها تأوى لصوني لقربت % بعيدا وشطت بالذين تقرب % 26(@)(@@) % كواكب آمالي وأقمار مطلبي % % نأتني وفي الأحباب بدر وكوكب % % 27(@)(@@) % تطلع حينا من بروج سعودها % % على ويطويها البعاد فتغرب % 28(@)(@@) % إذا قلت هذا العام حسب وبعده ال % % ثواء أتى في الأمر ما ليس يحسب % 29(@)(@@) % فكم يحمل الثقل الضعيف وكم ترى % % يقل وسوق البعد جنب مندب % 30(@)(@@) % و كم تكتسي في ظل قوم أعزة % قوادم ريشي ثم تعرى فتسلب % PageV01P254 31(@)(@@) % و يأخذ مني الحاضرون ببخلهم % % فواضل ما يعطي السماح المغيب % 32(@)(@@) % أيدري الوزير من كني عنه أو 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms79# عني % % نعم هو يدري ما أعمي وأعرب % 33(@)(@@) % و إني بحبل غير أطناب بيته % % على بيت شعر ناصح لا أطنب % 34(@)(@@) % سمات بني عبد الرحيم سلائط % على وجه أشعاري تنير وتثقب % 35(@)(@@) % لهم جمتا فكري مطيلا ومقصرا % % و صفوته صرفا وبالماء تقطب % 36(@)(@@) % فلو قلت إني في مديح سواهم % صدقت لقال الشعر في السر تكذب % 37(@)(@@) % هم أمكنوني من ظهور مآربي % % فأركب منها ما اشاء وأجنب % 38(@)(@@) % ألم بهم ما لا يلم بشاعب % و أرأب فيهم صدع ما ليس يرأب % 39(@)(@@) % و أستعتب الأيام وهي مصرة % بهبتهم حتى تفيء فتعتب % 40(@)(@@) % هم رحمي والأقربون معقة % و فيهم أبي البر الرؤوف ولا أب % PageV01P255 41(@)(@@) % و دولتهم لا عطلت لي مواسم % و أيامهم سوق بفضلي تجلب % 42(@)(@@) % ذخرت لهم كنزا مواريث قومهم % % فمن رامني من غيرهم فهو يغصب % 43(@)(@@) % فلا أسمعت ذبيان بعدي وبعدهم % % بني منذر عذرا به العفو يوجب % 44(@)(@@) % و لا فرحت أقيال آل أمية % بما سيرت فيها تميم وتغلب % 45(@)(@@) % أيا راكب العشواء يطرح صدرها % % خطارا على الشق الذي هو أتعب % 46(@)(@@) % ترى ظلها في الشمس تحسب أنه % % لأخرى سواها لاحقا أو ستقرب % 47(@)(@@) % تغار إذا ما ابصرت ظل سنبك % على الأرض جلى سابقا وهي تعقب % 48(@)(@@) % كأن فجاج الأرض نقد لركضها % % تغير عليه كيف شاءت وتنهب % 49(@)(@@) % تنص مقاضاتين للسير تلفظ ال % % محال وتوعي الحق نصحا فتوعب % 50(@)(@@) % و كالئة ترعى الشخوص كأنها % % أخو ليلة بات الربيئة يرقب % PageV01P256 51(@)(@@) % إذا اقتضيت في ذمة النجم حاجة % فتلك لديها دعوة لا تخيب % 52(@)(@@) % تحمل سلامي واحتقب لي حاجة % تضيء لك المسرى وطرقك غيهب % 53(@)(@@) % إلى شرف الدين انتزعها إهابها % % و دعها على نار السياط تلهب % 54(@)(@@) % إلى ملك لا يسلك النوم جفنه % و في الملك صدع بالسهاد يشعب % 55(@)(@@) % و لا تبلغ الأثقال غاية جهده % إذا ظلت البزل المصاعيب تشغب % 56(@)(@@) % تفحص في الآراء حتى أرينه % على غير فحص أي أمريه أصوب % 57(@)(@@) % و أتعبه التدبير حتى أراحه % % و قد تستريح النفس من حيث تتعب % 58(@)(@@) % فكن مبلغا عني وحظك عنده % % إذا أنت باسمي فهت أهل ومرحب % 59(@)(@@) % و قل يا عميد الدولة اعطف وإن جنت % فما 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms80# زلة إلا وعفوك أرحب % 60(@)(@@) % تلاف عصاها أن تشق فإنها % % بسوء القضايا تلتحي وتشذب % PageV01P257 61(@)(@@) % و دارك ذماها وهو بعد فربما % % تخور القوى أن ينفع المتطبب % 62(@)(@@) % يقربك الإقبال حينا فتؤنس ال % % حياة ويقصك الشقاء فتعطب % 63(@)(@@) % و من أعجب الأشياء تعليلها بمن % ترى عجزه من حظه يتعجب % 64(@)(@@) % فإن يبلغوا بالداء لا يحسمونه % % و عندهم منك الدواء المجرب % 65(@)(@@) % إذا طلقت منك الوزارة أصبحت % مجدذة من حسنها تتسلب % 66(@)(@@) % تغوث بالأسحار تدعو صباحها % % و تبكي زمان الوصل منك وتندب % 67(@)(@@) % تخال بها ربعا محيلا تساقطت % تحاجل فيه الساحجات وتنعب % 68(@)(@@) % بنيت بها بكر الصبا فمن الذي % % يصفي هواها وهي شمطاء ثيب % 69(@)(@@) % و أبرح من تعنيسها وهي أيم % إذا غبت من يسمى لها وهي تخطب % 70(@)(@@) % و هذا أوان الشد فانهض بحملها % % وثب واثقا إن العلاء توثب % PageV01P258 71(@)(@@) % فما كل ما استوضحت فيها هداية % و ليس ضلالا كل ما تتنكب % 72(@)(@@) % قد اشتاقك الملك الذي أنت أنسه % و أوحش صدر منه وارتاع موكب % 73(@)(@@) % و قد أعجف الرواد واعتصروا الحيا % % من الصخر إذ أمست سماؤك تحجب % 74(@)(@@) % و قص جناح الشعر لا الطبع جاريا % % يرق ولا مستولد الفكر ينجب % 75(@)(@@) % فنحن كأنا لم نصف ملكا ولم % % نقم قط ما بين السماطين نخطب % 76(@)(@@) % و كائن لنا من موقف متشهر % لديك يطيب القول فيه ويعذب % 77(@)(@@) % تميز به عنق القوافي وهجنها % % و تعلم ما ذا يجتبى ويحبب % 78(@)(@@) % و وجهك بسام إلى المدح مقبل % عليه ووجه الدهر جهم مقطب % 79(@)(@@) % و كم ثم من مسترزق حلفت له % % لهاك وبرت أنه لا يخيب % 80(@)(@@) % و عيش يبيس بالسماح بللته % و وجهك فيه من بنانك أرطب % PageV01P259 81(@)(@@) % رعى الله منك البحر لم أرو بعده % % بلى ربما أفعمت والبحر ينضب % 82(@)(@@) % و مطرح آمالي الذي كل ضيق % عليه فسيح عنده لي مرغب % 83(@)(@@) % و ما لي إذا أعسرت من كل وجهة % و جاهي الذي من بعضه المال أكسب % 84(@)(@@) % تأجن غدراني وماؤك سلسل % و تخبث أوطاني وتربك طيب % 85(@)(@@) % و جودك لي سيان ما كنت حاضرا % % قريبا وما ينأى وما يتقرب % 86(@)(@@) % فلولا مضيض الشوق لم أشك غصة % و لا 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms81# أجحف الترداد بي والتقلب % 87(@)(@@) % و لكنك العين التي كل غبطة % إذا هي لم توجد عناء معذب % 88(@)(@@) % فلا حولت عني ظلالك خطة % تحل ولا محذورة تترقب % 89(@)(@@) % و عشت لمثلي واحدا في زمانه % % و للناس بعدي يطلبون وتطلب % 90(@)(@@) % أجازي نداك الغمر نشرا مخلدا % % كلانا مطيل في معانيه مطنب % PageV01P260 91(@)(@@) % بكل مطاع أمرها مستجيبة % لدعوتها الأسماع تزجى وتوهب % 92(@)(@@) % تولج لا تخشى تلون آذن % لها الخلوات والرواق المحجب % 93(@)(@@) % يقر لها بالفضل من لم تقل له % % و يعظمها العياب والمتعصب % 94(@)(@@) % لها كل صوت كل راويه مبلغ % فصيح ومن غنى به فهو مطرب % 95(@)(@@) % تصفت فقد كادت مع التبر تقتنى % % و رقت فقد كادت مع الماء تشرب % 96(@)(@@) % مصدقة في المدح أسرف أو غلا % % و مأمونة ما تستزيد وتعتب % 97(@)(@@) % تزورك يوما في نديك تجتلى % % و يوما مع السفار تقرا وتكتب % 98(@)(@@) % تسوق التهاني خلفها وأمامها % % تصعد في الدنيا بكم وتصوب % 99(@)(@@) % تذكركم من حقها إن نسيتم % بما تقسم الأعياد حظا وتنصب % 100(@)(@@) % ترفع عن تيه المصيب وعجبه % و لكن بكم فخرا تتيه وتعجب % PageV01P261 البحر : - 1(@)(@@) % سل الركب إن أعطاك حاجتك الركب % من الكاعب الحسناء تمنعها كعب % 2(@)(@@) % قضى أنها مغلوبة لين عطفها % % و حصنها أن تملك الأسد الغلب % 3(@)(@@) % حموها وذابوا أن ترام وما حموا % % قلوب الهوى من مقلتيها ولا ذبوا % % 4(@)(@@) % و هزوا القنا الخطار والبيض دونها % % فمن طالب والمانع الطعن والضرب % 5(@)(@@) % يخافون صوت العار أن يصبحوا بها % % حديثا وأفواه المواسم تستب % 6(@)(@@) % و ما العار إلا أن بين بيوتهم % % قلوب المحبين السلائب والنهب % 7(@)(@@) % لئن أشحطوها أن تزار فبيننا % % مواثيق بعد الدار إن رعيت قرب % 8(@)(@@) % و إن حجبت والريح تسفر بيننا % % بنجوى فؤادينا فما ضرت الحجب % 9(@)(@@) % و في دارها بالروضتين لناظر % شفائف ضوء البدر تكفره السحب % 10(@)(@@) % و منها ومن أترابها في ثرى الحمى % % عبائق تهديها الصبا لي والترب % PageV01P262 11(@)(@@) % وقفت وصحبي في اللوى فأملهم % % وقوفي حتى وقفت ولا صحب % 12(@)(@@) % أذاكره مرآة يومي بأهله % % فيشكو الذي أشكو ويصبو كما أصبو % % 13(@)(@@) % و لم أحسب الأطلال تخضعها النوى % % و لا أن جسم الربع ينحله الحب % 14(@)(@@) % تحدث بما أبصرت يا بارق 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms82# الحمى % % فإنك راو لا يظن بك الكذب % 15(@)(@@) % و قل عن حشي من حرها وخفوقها % % تعلمت ما تنزو خطارا وتشتب % 16(@)(@@) % و عن بدن لم يبرح الشوق معريا % و شائظه حتى التقى الجنب والجنب % 17(@)(@@) % فلو أنه في جفن ظبية حابل % مكان القذي ما كان يلفظه الهدب % 18(@)(@@) % و هذا ضنا جسمي وقلبي عندها % % فكيف به لو كان في جسدي قلب % 19(@)(@@) % فطرت على طين الوفاء ودينه % فنفسي إليه بالغريزة تنصب % 20(@)(@@) % فكم نائم عني وثير مهاده % و جنبي له عن لين مضجعه ينبو % % PageV01P263 21(@)(@@) % أصابر فيه الليل حتى أغيظه % % فتحسد أجفاني على السهر الشهب % 22(@)(@@) % و أعجب ما حدثته أن ذمة % وفت فارس فيها وخاست بها العرب % 23(@)(@@) % عذيري من الأيام أوخمن مرتعي % % و رنقن لي من حيث يستعذب الشرب % 24(@)(@@) % تناوب قوما غضها وهشيمها % % و كل نصيبي من معيشتها الجدب % 25(@)(@@) % أخلى عليهم عفوها ودرورها % % فأرضى بلا ذل بما كده العصب % 26(@)(@@) % و أتركها ترك المسالم قادرا % % لأسلم منها وهي لي أبدا حرب % 27(@)(@@) % و كم قد شكوت الدهر لو كان مشكيا % % و عاتبت جور الحظ لو نفع العتب % 28(@)(@@) % بلى في يدي لا أكفر الله جانب % من العز لي فيه الوسيعة والرحب % 29(@)(@@) % و منبع جود لو قنعت كفى الغنى % % و بل غليلي ماؤه العلل السكب % 30(@)(@@) % تعود جوى غيمه ونسيمه % و أرضي أن تزكو عليه وأن تربو % % PageV01P264 31(@)(@@) % أقلني من التغرير يا طالب العلا % % و من كدي الآمال تنهض أو تكبو % % 32(@)(@@) % فلولا الندى العد الرحيمي ما جرى % % إلى أيكتي ماء ولا اخضر لي ترب % 33(@)(@@) % هم الناس ناسي والزمان زمانهم % % ربيعي وكسبي من رضاهم هو الكسب % 34(@)(@@) % نملحت فيهم والتحفت بريشهم % % فوكري بهم حيث استوى الماء والعشب % 35(@)(@@) % و حسبي غنى أو سوددا أن بحرهم % % و سيدهم عند الملمات لي حسب % 36(@)(@@) % إلى شرف الدين انتشطنا حبالها % % تعانق في نفض الطريق وتختب % 37(@)(@@) % سلائل ما صفى الغضين وداحس % و حازت كلاب رهنها واعتلت كلب % 38(@)(@@) % بنات الفلا والريح كل حسيرة % % إليها الرياح المستقيمات والنكب % 39(@)(@@) % كسير العصا المقدود لو سلكت بها % % ثقوب الخروت لم يضق دونها ثقب % 40(@)(@@) % تخال عنانا في 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms83# العنان من الطوى % % و إن شطبت بالسوط هي الشطب % PageV01P265 41(@)(@@) % تحط إليه وهي قلب من الطوى % % و تركب عنه وهي مجفرة قب % 42(@)(@@) % إلى ملك لا يملك الخوف صدره % % خفوقا ولا يغشى على رأيه الخطب % 43(@)(@@) % و لا يطبيه التيه في معجزاته % % إذا هامة المفتون أسكرها العجب % 44(@)(@@) % مهيب الرضا مستصفح السخط بالغ % % به القول ما لا يبلغ الباتر العضب % 45(@)(@@) % محيط بآفاق ا صابة رأيه % بديها ورأي الناس مختمر غب % 46(@)(@@) % إذا رفعت للإذن سجفا رواقه % فلأعين الإشراق والآنف الترب % 47(@)(@@) % مقام تلاقى عنده النعم السطا % % و يجتمع الرغب المحبب والرعب % 48(@)(@@) % إذا أمرته مرة من حفيظة % تسوء نهاه خلقه البارد العذب % 49(@)(@@) % تصور من حسن وحلم ونائل % ففي الدست منه البدر والبحر والعضب % 50(@)(@@) % من القوم لم تضرب عليهم إتاوة % و لم يعتبدهم غير خالقهم رب % PageV01P266 51(@)(@@) % صدور قلوب في المجالس والوغى % % إذا رشحوا فاضوا وإن قدحوا شبوا % % 52(@)(@@) % و مد عميد الدولة العرض راسخا % % فحدث عن ضرب العلا الرجل الضرب % 53(@)(@@) % و ما علمت أم الكواكب قبله % % و قبلهم أن الهلال لها عقب % 54(@)(@@) % و أن شروق الشمس عنهم سينتهي % % إلى ملك في صدره الشرق والغرب % 55(@)(@@) % أرى الملك بعد الميل قامت قناته % و لوحم منه بعد ما انصدع الشعب % 56(@)(@@) % لك البلجة البيضاء إن مات فجره % و في يدك التفريج إن غشى الكرب % 57(@)(@@) % و قد علمت أم الوزارة أنها % % إذا غبت ثكلى قصرها الدمع والندب % 58(@)(@@) % و تطمع مخدوع المنى في نكاحها % % مطامع كدتها وأنت لها خطب % 59(@)(@@) % و دبوا لها تحت الظلام عقاربا % % و لو حسبوا وطء الأخامص ما دبوا % % 60(@)(@@) % و لما رأوا عنها التفاتك عاجلوا % % وثوبا وقدما طاح بالقدم الوثب % PageV01P267 61(@)(@@) % رقيت بفضل الحلم شوكة لسبهم % % فقد ماتت الأفعى وقد برأ اللسب % 62(@)(@@) % هم عقروها إذ تعاطوا فعذبوا % % و رأيك فيهم صالح وهم السقب % 63(@)(@@) % و راموا التي يرضى بها الخرق وحده % خداعا وتأباها الحزامة واللب % 64(@)(@@) % و من دونها أن يخطب الليث هدنة % من الذئب أو يبكي من العطش الضب % 65(@)(@@) % تحدثهم أحلامهم أن ظهرها % % ركوب ولكن يكذبون إذا هبوا % % 66(@)(@@) % صلوها فما يشقى من اليوم سعدها 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms84# % % عليكم ولا تذوي وأنتم لها قطب % 67(@)(@@) % و لا برحت فيكم تجر عزيزة % سرابيل لا يخفى ذلاذلها السحب % 68(@)(@@) % ضممت عزيب الملك بعد انتشاره % و أفرشته أمنا وقد ذعر السرب % 69(@)(@@) % و ما زلت بالتدبير تركب صعبه % % إلى سهله حتى استوى السهل والصعب % 70(@)(@@) % أحبك ودا من يخافك طاعة % و أعجب شيء خفيفة معها حب % PageV01P268 71(@)(@@) % و لو نشزت عنك القلوب لردها % % لسانك هذا الحلو أو وجهك الرطب % 72(@)(@@) % فما مقلة إلا وأنت سوادها % % و لا كبد إلا وأنت لها خلب % 73(@)(@@) % و أما القوافي فهي منذ رعيتها % % بطائن واد كل أعوامه خصب % 74(@)(@@) % يكاثفها نبتا ويعدب مشربا % % فلساتها خضم ورشفاتها عب % 75(@)(@@) % صحائح ملسا كالدهان وعهدنا % % بها عند قوم وهي مجفلة جرب % 76(@)(@@) % و كم بكرة لمدحك قدتها % % فقرت ومن أخلاقها الغشم والشغب % 77(@)(@@) % تغاديك أيام التهاني بوفدها % % مكررة لبسا وهن بها قشب % 78(@)(@@) % بشائر ملك صدقه فيك لا يهي % % له ركن و لا يقصر له طنب % 79(@)(@@) % و أن يد الله البسيطة جنة % تقيكم وأحزاب السعود لكم حزب % 80(@)(@@) % يزوركم قلبي بها مثل منطقي % % فلا الغش مخشي عليها ولا الحب % PageV01P269 81(@)(@@) % و أمدح من أعطاكم من لسانه % و أرضاكم من قلبه بكم صب % 82(@)(@@) % فلا تعدموا منها عرائس عطلا % لها من أياديكم قلائد أو قلب % 83(@)(@@) % إذا مشت الأقران حول خريدة % فوحدتها في الحسن ليس لها ترب % 84(@)(@@) % أجد بها والطبع يجري خلالها % % طلاوة رقراق ترى أنها لعب % 85(@)(@@) % و غيركم يرتاب بي إن مدحته % % لعرفانه ألا يحل لها الغصب % 86(@)(@@) % فأرفعه بالفعل لو كان فاعلا % % و قد خفضته من نقيصته رب % 87(@)(@@) % يساء كأني بالثناء أسبه % لعمر أبي أن النفاق هو السب % PageV01P270 البحر : - 1(@)(@@) % و كالرقم يحسبه من قرا % % و يعرف ممن إذا من كتب % 2(@)(@@) % من البهم لو طلب النطق ضل % و في الأنبياء إذا ما طلب % 3(@)(@@) % يبادر خيل الوغى الدهم وال % % وراد بشهباء تجلى الشهب % 4(@)(@@) % بحيث ترى مخطفات الحدي % % د يضعفن عن مرهفات القصب % 5(@)(@@) % إذا ما تردى نجا سالما % % و يقعص إن قام أو إن وثب % 6(@)(@@) % يكون بدرع فيلقى وإن % تسربل درعين لاقى العطب % PageV01P271 البحر : - 1(@)(@@) % و جارية في 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms85# مجاري الحياة % خلعت عليها رداء الشباب % 2(@)(@@) % و حليتها حلية المشرف % % ي فوق حمائله والقراب % 3(@)(@@) % إذا غادة منعت وطأها % % تبطنت منها ذلول الركاب % 4(@)(@@) % و خرق ما تحته ظهرها % % كما تخرق الشمس ثوب السحاب % 5(@)(@@) % و أحمد من جسمها أنه % % كريم العظام لئيم الإهاب % PageV01P272 البحر : - 1(@)(@@) % و صفحة وجه من وجوه علقتها % % أراعي خدوشا فوقها وندوبا % % 2(@)(@@) % تعرض لي والغانيات صوادف % فأذكر أصداغا لها وتريبا % % 3(@)(@@) % أكون حليما تارة ما اجتليتها % % وقورا وأحيانا أكون طروبا % % 4(@)(@@) % و يعجبني منهن أني لا أرى % % حبيبا لقلبي أو أراه قريبا % % 5(@)(@@) % سبتني بألفاظ الرجال وطاب لي % % جناها ولم تنطق ولم أر طيبا % % 6(@)(@@) % فأودعتها ما أودع الله مهجتي % % جلابيب خيطت لا تقل جيوبا % % 7(@)(@@) % تقصر عن أقدامها ورؤسها % % و تملأ أصلابا وجنوبا % % 8(@)(@@) % إذا عريت منها وقتها عيوبها % % و إن ألبستها لم توار عيوبا % % PageV01P273 البحر : - 1(@)(@@) % ما أنكرت إلا البياض فصدت % و هي التي جنت المشيب هي التي % % 2(@)(@@) % غراء يشعف قلبها في نحرها % % و جبينها ما ساءني في لمتي % % 3(@)(@@) % لولا الخلاف وأخذهن بدينه % % لم تكلف البيضاء بالمسودة % 4(@)(@@) % أأنست حين سريت في ظلمائها % % و نفرت أن طلعت عليك أهلتي % % 5(@)(@@) % و لقد علمت وعهد رامة عهدنا % % فتيين أني لم أشب من كبرة % 6(@)(@@) % و إذا عددت سني لم أك صاعدا % % عدد الأنابيب التي في صعدتي % % 7(@)(@@) % أجنيتها من خلة في مفرقي % % فتكون عندك قادحا في خلتي % % 8(@)(@@) % نكروا فلا عرفوا برامة وقفة % ميلاء نادتها الديار فلبت % 9(@)(@@) % و ألام فيك وفيك شبت على الصبا % % يا جور لائمتي عليك ولمتي % % 10(@)(@@) % و حننت نحوك حنة عربية % عيبت وتعذر ناقة إن حنت % PageV01P274 11(@)(@@) % ماذا على الغضبان ما استرفدته % دمعا ولا استوقفته من وقفتي % % 12(@)(@@) % أبغى الشفاء بذكره من مسقمي % % عجبا لمن هو علتي وتعلتي % % 13(@)(@@) % يا هل لليلات بجمع عودة % أم هل إلى وادي منى من نظرة % 14(@)(@@) % و الحاصبات وكل موقع جمرة % ينبدنها في القلب موقد جمرة % 15(@)(@@) % و من المحرم صيدهن خليعة % طابت لها تلك الدماء وحلت % 16(@)(@@) % حكمت عليك بقلب ليث مخدر % و رنت اليك بعين ظبي مفلت % 17(@)(@@) % و رأيت أم الخشف تنشد بيتها % % أفأنت تلك سرقت 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms86# عين الظبية % 18(@)(@@) % نشطوا عن الركب الحبال فنفروا % % سكنات أضلاعي بأول نفرة % 19(@)(@@) % رفعوا القباب وكل طالب فتنة % يرنو اليك وأنت وحدك فتنتي % % 20(@)(@@) % لا استوطأت مني مكانك خلة % كل الفؤاد نصيب ذات الكلة % PageV01P275 21(@)(@@) % يا من يلوم على اجتماعي قاعدا % % و الأرض واسعة الفروج لنهضتي % % 22(@)(@@) % و يرى الرجال وكلهم متكثر % بصحابة فيلومني في وحدتي % % 23(@)(@@) % أعذر أخاك فما تهجر مشمسا % % حتى تقلص عنه ظل الدوحة % 24(@)(@@) % كيف اعترافي بالصديق وكيف لي % % بالفرق بين محبتي من بغضتي % % 25(@)(@@) % و قلوب أعدائي الذين أخافهم % % مغلولة لي في جسوم أحبتي % % 26(@)(@@) % رقص السراب فراقني من راقص % كشرت مودته وراء الضحكة % 27(@)(@@) % و رأيت فاغرة ظننت كشورها % % طلبا لتقبيلي فكان لنهستي % % 28(@)(@@) % ولد الزمان الغادرين فما أرى % % أم الوفاء سوى المقل المقلت % 29(@)(@@) % و هزلت أن سمن اللئام وإنما % % ذل المطامع حز عزة جوعتي % % 30(@)(@@) % و لكل جسم في النحول بلية % و بلاء جسمي من تفاوت همتي % % PageV01P276 31(@)(@@) % أما على كذب الظنون فإنها % % صدقت أمان في الحسين وبرت % 32(@)(@@) % المجد ألقح في السماء سحابة % نتجت به مطر البلاد فعمت % 33(@)(@@) % أروى على يبس الشفاه وبيضت % كفاه باردة سواد الحرة % % 34(@)(@@) % متهللالا أعدي بخضرة جوده % جدب الربي من أرضها المغبرة % 35(@)(@@) % بالصاحب انفتقت لنا ريح الصبا % % خصبا وغنى الساق فوق الأيكة % 36(@)(@@) % كفلت بأولى مجده أيامه ال % % أخرى فأحيا كل فضل ميت % 37(@)(@@) % شرفا بنى عبد الرحيم فإنما % % تجنى الثمار بقدر طيب المنبت % 38(@)(@@) % لكم قدامى المجد لكن زادكم % % هذا الجناح تحلقا في الذروة % 39(@)(@@) % غدت الرياسة منكم في واحد % كثرت به الأعداد لما قلت % 40(@)(@@) % عطفت لكم يده وزمت آنفا % % شما لغير خشاشه ما ذلت % PageV01P277 41(@)(@@) % لما تقلدها وكانت ناشزا % ألقت عصاها للمقام وقرت % 42(@)(@@) % موسومة بكم فمن تعلق بها % % دعواه يفضحه علاط الوسمة % 43(@)(@@) % نيطت عراها منه بابن نجيبة % سهل الخطا تحت الخطوب الصعبة % 44(@)(@@) % يقظان يلتقط الكرى من جفنه % نظر العواقب واتقاء العذرة % 45(@)(@@) % لا يطمئن على التواكل قلبه % فيما رعى إن نام راعي الثلة % 46(@)(@@) % تدجو الأمور وعنده من رأيه % % شمس إذا ما جن خطب جلت % 47(@)(@@) % و يصيب مرتجلا بأول خطرة % أغراض كل مخمر ومبيت % 48(@)(@@) % تدمى بنان النادمين 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms87# وسنه % ملساء إثر ندامة لم تنكت % 49(@)(@@) % ما ضم شمل الملك إلا رأيه % بعد انشار شعاعه المتشتت % 50(@)(@@) % حسر القذى عن حوضه وسقى على % % طول الصدى فشفى بأول شربة % PageV01P278 51(@)(@@) % من بعد ما غمز العدا في عوده % و استضعفوا قدما له لم تثبت % 52(@)(@@) % و لرب بادئة وكانت جذوة % كملت ضراما بالحسين وتمت % 53(@)(@@) % حاميت عنه بصولة المتخمط ال % % عادي وهدي المستكين المخبت % 54(@)(@@) % و إذا عرى الحزم التقت علق الفتى % % بمدى السريع على خطا المتثبت % 55(@)(@@) % إن الذين على مكانك أجلبوا % % ضربوا الطلى بصوارم ما سلت % 56(@)(@@) % طلبوا السماء فلا هم ارتفعوا لها % % شل الأكف ولا السماء انحطت % 57(@)(@@) % و بود ذي القدم القطيعة ماشيا % % لو أنها سلمت عليه وزلت % 58(@)(@@) % خان السرى ركب القلاص وسلمت % بسط الفلاة إلى القروم الجلة % 59(@)(@@) % يفديك مرتاب بغلطة حظه % % سرق السيادة من خلال الفلتة % 60(@)(@@) % ما رد يوما عازب من عقله % % إلا رأى الدنيا به قد جنت % PageV01P279 61(@)(@@) % قبضت يداه وما يبالي سائل % بخلت عليه يد امرئ أو شلت % 62(@)(@@) % و أرى الوزارة لا يعاصل نابها % % حاو سواك على اختلاف الرقية % 63(@)(@@) % يرجوك ريضها لمتن مزلق % قد قطرت فرسانه فتردت % 64(@)(@@) % يشتاق ظهرك صدر مجلسها وكم % % شكت الصدور من الظهور وضجت % 65(@)(@@) % و إذا التفت إلى الأمور رأيتها % % مذخورة لك من خلال تلفتي % % 66(@)(@@) % فأل متى يامنت سانح طيره % صدقت عياقها بأول زجرة % 67(@)(@@) % فهناك فاذكر لي طريف بشارتي % % بعلاك واحفظ تالدا من صحبتي % % 68(@)(@@) % لو شافه الصم الجلاد محدث % عنكم بني عبد الرحيم لأصغت % 69(@)(@@) % أو عوضت بكم السماء وقد هوت % أنوارها بدل النجوم تسلت % 70(@)(@@) % الباذلون فلو تصافح راحكم % % ريح الصبا وهي الحيا لاستحيت % PageV01P280 71(@)(@@) % و القائلون بلاغة فلو احتبت % أم الفصاحة بينكم لأذمت % 72(@)(@@) % أنست بفاتحة الكتاب شفاهكم % % و رزقتم ظفر الكتاب المسكت % 73(@)(@@) % لكم انحنى صيدي وأعسل حنظلي % % للمجتني وتولدت حوشيتي % % 74(@)(@@) % و سجرتموني منصفين مودة % و رفادة يومي رخاي وشدتي % % 75(@)(@@) % أعشبتم فبطنت في مرعاكم % و الدهر يقنع لي بفضل الجرة % 76(@)(@@) % أدعو وغاب أبي وقل عشيرتي % % فيكون نصركم إجابة دعوتي % % 77(@)(@@) % و متى تقيدني الليالي عن مدى % % قمتم فأوسعتم إليها خطوتي % % 78(@)(@@) % عجب المديح وقد عممتكم 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms88# به % % من رجعتي فيه عقيب أليتي % % 79(@)(@@) % حرمته زمنا فكنتم وحدكم % % من بين من حمل التراب تحلتي % % 80(@)(@@) % هو جوهر ما كل غائصة له % % بالفكر تعلم ما مكان الدرة % PageV01P281 81(@)(@@) % و يصح معناه ويسلم لفظه % و نظامه وهناك باقي العلة % 82(@)(@@) % كم خاطب بأعز ما تحوي يد % عذراء منه وعرضه دون ابنتي % % 83(@)(@@) % و لقد زففت لكم كنائن خدره % فكرمتم صهرا ووالي عذرة % 84(@)(@@) % من كل راكبة بفضل عفافها % % و الحسن عنق العائب المتعنت % 85(@)(@@) % عزت فما عثرت بغير معوذ % بلغا ولا عطست بغير مشمت % 86(@)(@@) % أمة لكم بجزيل ما أوليتم % و تصان عندكم صيان الحرة % 87(@)(@@) % سلمت على غرر الخلاف ولادها % % في أمة وودادها في أمة % 88(@)(@@) % مدت إلى ساسان ناشر عرقها % % و قضت لها عدنان بالعربية % 89(@)(@@) % يصغى الحسود لها فيشكر أذنه % طربا وود لغيظه لو صمت % 90(@)(@@) % تسري رفيقة يوم مؤذن % بسعادة فإذا ألم ألمت % PageV01P282 91(@)(@@) % تروي لكم عن ذي القرون حديثه % قدما ويحيي نشرها ذا الرمة % 92(@)(@@) % أحمدتم ماضي في أمثالها % % و لئن بقيت لتحمدن بقيتي % % PageV01P283 البحر : - 1(@)(@@) % رعى الله يوم البين ظبيا أذم لي % % بما أثر التوديع في وجناته % 2(@)(@@) % تعاطيت إلا النوم بعد فراقه % كأني عليه مسقم بحياته % 3(@)(@@) % و صرت أذم الدهر في الليل ما دجا % % و عهدي به والليل من حسناته % PageV01P284 البحر : - 1(@)(@@) % قفا نضويكما بالغمر نسأل % حفيا أين مثوى المكرمات % 2(@)(@@) % و أي ثرى كريم العرق سيطت % به رمم المعالي الدارسات % 3(@)(@@) % و أين لذكرها تحت الغوادي % % مطارح أعظم فيها رفات % 4(@)(@@) % و كيف تكورت بيد المنايا ال % % غزالة مدرجا للسافيات % 5(@)(@@) % و إن أصفى مزاد كما فمدا % % بأذنبة هنالك مترعات % 6(@)(@@) % أنامل للحسين غبرن حينا % % ضرائر للغيوث المرزمات % % 7(@)(@@) % و لوذا مسندين بجنب طود % من المعروف عالي الهضب عاتي % % 8(@)(@@) % فثم الجار محمى النواحي % % و ثم الرعي مكتهل النبات % 9(@)(@@) % و ثم الوجه أبلج والمساعي ال % % كرام وثم حاجات العفاة % 10(@)(@@) % قفا فتناديا فلعل صوتا % سيزقو أو يصيخ إلى الدعاة % PageV01P285 11(@)(@@) % و قولا كيف يا حنش الرمال أخ % % تدعت ولست من قنص الرقاة % 12(@)(@@) % من الحاوي الذي انترعت يداه % نيوب العز من تلك اللهاة % 13(@)(@@) % لعمر العاطفين اليك ليلا % لنعم 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms89# أخو العشايا الصالحات % 14(@)(@@) % و نعم عدو مالك كنت فيهم % % و خصب الجالبات الرابحات % 15(@)(@@) % و مأوى كل مطرد ترامى % % به الأخطار أيدي النائبات % 16(@)(@@) % لمن خيل تضمر للسرايا % % و فرسان تخمر للبيات % 17(@)(@@) % و أندية وأروقة رحاب % تضم بدائد الفضل الشتات % 18(@)(@@) % و من للمحكمات من القوافي % % تطير بهن أجنحة الرواة % 19(@)(@@) % و من لي يزحم الأيام عني % % و قد هجمت علي مصممات % 20(@)(@@) % و يجذب من يد الزمان المعاصي % % بأضباعي إلى الزمن المواتي % % PageV01P286 21(@)(@@) % و من ذا قائل خذ أو تحكم % إذا أنا قلت هب أو قلت هات % 22(@)(@@) % و ما أنا والعزاء وقد تقضت % حياة تستمد بها حياتي % % 23(@)(@@) % يعنف فيك أن صدعت ضلوعي % % خلي القلب من تلك الهنات % 24(@)(@@) % كأني فيك أبعث بالتأسي % % على جزعي وأغري بالعظات % 25(@)(@@) % رزئتك أطول الرجلين باعا % % و أمضى الصارمين على العداة % 26(@)(@@) % و أوفى من سراج الأفق نورا % إذا الأيام كانت داجيات % 27(@)(@@) % كأني قبل يومك لم أفزع % بصائحة العشي ولا الغداة % 28(@)(@@) % و لم تطرف بفاجعة لحاظي % % و لم تقرع بمرزئة صفاتي % % 29(@)(@@) % بكيتك في العناة فحين قالوا % % قتلت وددت أنك في العناة % 30(@)(@@) % أصاب السيف منك غزار سيف % و حط بك الفرات إلى الفرات % PageV01P287 31(@)(@@) % فلا زالت هي البتر النواتي % % سيوف أسلمتك إلى النواتي % % 32(@)(@@) % ذوائب أسرتي وكرام صحبي % % و إخوة شدتي وبني ثقاتي % % 33(@)(@@) % هوت بالصاحب القرطات مني % % فرحت بعاطلات مصلمات % 34(@)(@@) % لقد خولست وسطي العقد منكم % % به وخدعت عن أخرى القناة % 35(@)(@@) % فيا مطلول بل ثراك صبحا % صلاة الله تتبعها صلاتي % % 36(@)(@@) % لقد واسيتني في العيش دهرا % % فمالي لم أواسك في الممات % 37(@)(@@) % عسى وبلى لنا لا بد يوم % سيقضي فيك ممطول الترات % 38(@)(@@) % فإن أجزع فماض كل ماض % و إن أصبر فآت كل آت % PageV01P288 البحر : - 1(@)(@@) % دعها تكن كالسلف من أخواتها % % تجري بها الدنيا على عاداتها % % 2(@)(@@) % ما هذه يا قلب أول عثرة % قذفت بك الأطماع في لهواتها % % 3(@)(@@) % هي ما علمت وإن ألمت لفضلة % من ثقل وطأتها وحد شباتها % % 4(@)(@@) % كم خطوة لك في المنى إزليقة % لم تنتصر بلعا على عثراتها % % 5(@)(@@) % و ذخيرة طفقت يداك تضمها % % و الدهر خلفك مولع بشتاتها % % 6(@)(@@) % و وثيقة 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms90# ألجأت ظهرك مسندا % بغرورها فسقطت في مهراتها % % 7(@)(@@) % لو كنت عند نصيحتي لم ترتبق % بمشوره الآمال في حلقاتها % % 8(@)(@@) % و هوى أطعت أميره في لذة % متبوعة لم تنج من تبعاتها % % 9(@)(@@) % يبني السفين اللامعات سرابها % % و يعد مخدوعا تراب فلاتها % % 10(@)(@@) % و فتاة قوم لا ينام مغيرهم % % رمت اقتسارهم على خلواتها % % PageV01P289 11(@)(@@) % شحذوا المدى لك دونها فركبتها % % تغتر حتى طرت في شفراتها % % 12(@)(@@) % و يمين جارية سلكت في % % مسباحها و ذهبت في آناتها % % 13(@)(@@) % ما كان قبلك للحفاظ شريعة % في دينها أبدا ودين لداتها % % 14(@)(@@) % نظرت فكنت ضريبة لحسامها % % و مشت فكنت دريئة لقناتها % % 15(@)(@@) % و مضيت تتبع وصلها ولسانها % % و الرشد عند صدودها ووشاتها % % 16(@)(@@) % نم قدسهرت فدون يوم وفائها % % و هي التي جربت يوم وفاتها % % 17(@)(@@) % و اشكر لها كشف القناع فإنها % % غدرت فكان الغدر من حسناتها % % 18(@)(@@) % و اذكر مآرب غيرها واعجب لها % % غصبتك آفتها على لذاتها % % 19(@)(@@) % و ملثمين على النفاق بأوجه % صم يصيح اللؤم من قسماتها % % 20(@)(@@) % صبغوا الوفاء بياضه بسواده % و المكرمات هبوبها بسباتها % % PageV01P290 21(@)(@@) % متراهنين على الدنية أحرزوا % % غاياتها وتناهبوا حلباتها % % 22(@)(@@) % ورثت نفوسهم خبائث أصلها % % لؤما وزادت دقة من ذاتها % % 23(@)(@@) % أيد تجف على الربيع وألسن % سرق السراب الإفك من كلماتها % % 24(@)(@@) % يصف المودة بشرها ووراء % % بشر الزجاج يشف عن نياتها % % 25(@)(@@) % دسوا المكايد في مواعد حلوة % كانت عقارب والكذاب حماتها % % 26(@)(@@) % خلق إذا حدثت عن أخلاقها % % فكأنما كشفت عن سوآتها % % 27(@)(@@) % لله آمال أرقت دماءها % % فيهم فلم يتعلقوا بدياتها % % 28(@)(@@) % و كرائم وليت فضة عذرها % % منهم سوى أكفائها وكفاتها % % 29(@)(@@) % غر أهنت على اللئام كرامها % % و أبحت أبناء العقوق بناتها % % 30(@)(@@) % أهمتها فيهم سدى مظلومة % تبكي أراجزها على أبياتها % % PageV01P291 31(@)(@@) % يتناكرون حقوقها من بعد ما % % علطوا على أعراضهم بسماتها % % 32(@)(@@) % من كل مفتوح إليها سمعه % مضمومة كفاه دون صلاتها % % 33(@)(@@) % يهوى العلا فاذا ارتقى لينالها % % رداه حب الوفر من شرفاتها % % 34(@)(@@) % حيران يتبع من أخيه ونجله % ما يتبع الأصداء من أصواتها % % 35(@)(@@) % من عاذري منهم ومن لحرارة % أشرجت أضلاعي على جمراتها % % 36(@)(@@) % و لخطة خسف عصبت بعارها % % رأس العلا وحططت من درجاتها % % 37(@)(@@) % أنا ذاك جانيها فهل أنا آخذ % غيري بها وهو 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms91# الذي لم ياتها % % 38(@)(@@) % يا حظ ما لك لا أقالك عثرة % جاري الحظوظ وغافر زلاتها % % 39(@)(@@) % كم أشتكيك وأنت صل حماطة % لا يطمع الحاوون في حياتها % % 40(@)(@@) % عيش كلا عيش ونفس ما لها % % من متعة الدنيا سوى حسراتها % % PageV01P292 41(@)(@@) % و تود حين تود لو ما بدلت % أحبابها من جورها بعداتها % % 42(@)(@@) % و يزيدها جلدا وفرط تجلد % بين العدا الإشقاق من إشماتها % % 43(@)(@@) % إن كان عندك يا زمان بقية % مما يضام بها الكرام فهاتها % % 44(@)(@@) % صبرا على العوجاء من أقدارها % % لا بد أن تجري إلى ميقاتها % % 45(@)(@@) % و لعلها بالسخط منك وبالرضا % % أن تستقيم طريقها بحداتها % % 46(@)(@@) % كم مثلها ضاقت فحلل ضيقها % % يوم ولم يحسب جلا غمراتها % % 47(@)(@@) % و لقد كنزت فهل علمت مكانه % من صفو أيامي ومن خيراتها % % 48(@)(@@) % خلا تنخله ارتيادي واحدا % % صحت به الدنيا على علاتها % % 49(@)(@@) % غلطت به أم الزمان فأنجبت % فيه وخابت في بني علاتها % % 50(@)(@@) % لي منه كالئة العيون وبسطة ال % % أيدي الثقات إذا عدمت ثقاتها % % PageV01P293 51(@)(@@) % و قرابة الأخ غير أن مسافة % في الود لم يبلغ أخي غاياتها % % 52(@)(@@) % من مانعي حرم الإخاء ونافضي % % طرق الوفاء فمحرزي قصباتها % % 53(@)(@@) % و السالمين على تلون دهرهم % % و تحول الأشياء عن حالاتها % % 54(@)(@@) % و إذا الأكارع والزعانف عوروا % % من خلة كانوا مكان سراتها % % 55(@)(@@) % نبهته ومن العيون غضيضة % حولي وأخرى كنت أخت قذاتها % % 56(@)(@@) % فأثرت منه أبا الشبول فمالت ال % % أرماح تدعسه على غاباتها % % 57(@)(@@) % ملآن من شرف السجية نفسه % تحوى الفضائل عن جميع جهاتها % % 58(@)(@@) % منقادة للمكرمات وأنفس % تدع العلا وتقاد في شهواتها % % 59(@)(@@) % ما اختارت المختار لي إلا يد % وثقت لمغرسها بطيب جناتها % % 60(@)(@@) % لله خائلة رأيت ودادها % % بدلالة التوفيق في مرآتها % % PageV01P294 61(@)(@@) % رد الزمان به شبيبة عيشتي % % بعد اشتعال الشيب في شعراتها % % 62(@)(@@) % و تسومت غرا محجلة به % % أيام دهر قد نكرت شياتها % % 63(@)(@@) % كم خلة داويتها بدوائها % % منه ونعمى كان من أدواتها % % 64(@)(@@) % و ملمة ولي الزمان فتوقعها % % مني رقعت به وسيع هناتها % % 65(@)(@@) % من حامل صحف الثناء أمانة % لا يستطيع النكث قرع صفاتها % % 66(@)(@@) % شكرا كما ضحكت إليه مجودة % بالحزن باقي الطل في حنواتها % % 67(@)(@@) % يغدو فينقل ثقلها بسكينة % في سمتها هدى 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms92# وفي إخباتها % % 68(@)(@@) % طب بعلم فروضها وقروضها % % حتى يؤديها على أوقاتها % % 69(@)(@@) % أبلغ أبا الحسن التي ما بعدها % % مرمى لغالبة المنى ورماتها % % 70(@)(@@) % عني مغلغلة تسر حديثها % % أم الكواكب أو أعير صفاتها % % PageV01P295 71(@)(@@) % من منبع الحلو الحلال إذا غدا % % ملح القرائح ذاهبا بفراتها % % 72(@)(@@) % لو نازل الرهنان حط قنانها % % فصبت إليه وحل من عزماتها % % 73(@)(@@) % يجزيك عن كسب العلاء وحبه % ما تنطق الخرساء بعد صماتها % % 74(@)(@@) % و ترد أعراض الكرام كأنها % % يمينة تختال في حبراتها % % 75(@)(@@) % ثمنا لودك إن يكن ثمنا له % % بذل القوافي فيك مكنوناتها % % 76(@)(@@) % تسخو به لك من نخيلة سرها % % نفس ترى بك ما ترى بحياتها % % PageV01P296 البحر : - 1(@)(@@) % خصيماي من ظمياء واش وشامت % و حظاي مظنون لديها وفائت % 2(@)(@@) % و قلبي لها وحشية ضل خشفها % % تطاول تبغيه الربا وتلافت % 3(@)(@@) % مضت ليلة تقتصه بعد ليلة % و يوم تداجيه الشخوص الثوابت % 4(@)(@@) % تناشد عنه النجم أين طريقه % % تحارفه طورا وطورا تسامت % 5(@)(@@) % و لا هو منها حيث يجمع شارد % و لا يرتجى للعود إن عاد فالت % 6(@)(@@) % سوى أنها مرت بماء سويقة % سحيرا ورام بالشريعة بائت % 7(@)(@@) % على يده للرزق أذلغ أحرس % و ضلعاء فوها ساعة النزع صائت % 8(@)(@@) % يقوت شعاثا مقترين بفضلها % % أطابت له أو جانبته المقاوت % 9(@)(@@) % فما رابها إلا دم ونويرة % و منتقيات من عظام رفائت % 10(@)(@@) % فعادت تماشي اليأس موضع ظله % % و للحين لو أغنى الحذار مواقت % PageV01P297 11(@)(@@) % و خبرني السفار أن قد تبدلت % فقلت حديث مضحك وهو كابت % 12(@)(@@) % أسد مكاني في الهوى من تعوضت % مدى وأبيها بيننا متفاوت % 13(@)(@@) % أمنها خيال والجنوب خوافق % بجانب خبت والجفون خوافت % 14(@)(@@) % طوى الليل نجما وهو يستقل الخطا % % بساهلة الأرداف ثم يعانت % 15(@)(@@) % فبتنا به في ضوعة وإنارة % و بان اللوى خزيان والبدر باهت % 16(@)(@@) % نرى أن فأر المسك تحت رحالنا % % فتائق من أردانه وفتائت % 17(@)(@@) % سل الخيم بالبيضاء من جانب الحمى % % أتجمع أو طارى بكن الشتائت % 18(@)(@@) % و هل لطريد سله الدهر مدرك % فتعقل لي ليلاتكن الفلائت % 19(@)(@@) % إذ العيش حي والزمان مراهق % % فتى وريحان البطالة نابت % 20(@)(@@) % تلون رأسي صبغتين فميت % و ذونبة أو لاحق متماوت % PageV01P298 21(@)(@@) % و أمست على أيدي الغواني حبائلي % % و 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms93# هن بأطراف البنان بتائت % 22(@)(@@) % و ما الدهر إلا داء هم مماطل % % مدى العيش أو خطب هجوم مباغت % 23(@)(@@) % عذيري من الإخوان لا أستشف من % % قلوبهم من وامق لي وماقت % 24(@)(@@) % خفافا إلى ما ساءني فمصالت % به أو مداج كيف لي لو يصالت % 25(@)(@@) % جعلت الجفاء عوذة لي منهم % و في الناس أجساما قلوب عفارت % 26(@)(@@) % و علمني نبذي لهم وتوحدي % % بنفسي أني في التكثر غالت % 27(@)(@@) % سل السارح المخدوع أعجف ما له % % جفاء السمي والسنون السوانت % 28(@)(@@) % توغل يرجوها وتخلف ظنه % % منابع أكدي ماؤها ومنابت % 29(@)(@@) % إلى أين وابن الغاضرية شاهد % يغرك نجم أو يدلك خارت % 30(@)(@@) % تلق الحيا من جوه وارع روضه % تدر العجاف أو تعيش الموائت % PageV01P299 31(@)(@@) % ألا إنما بدر السماء ابن شمسها % % و بدر بني عوف على الأرض ثابت % 32(@)(@@) % فتى لا على الأعذار بالعهد ناكث % و لامع فرط الجود للسن ناكت % 33(@)(@@) % يبيت خميصا جنبه ووساده % و طارقه خصبا كما شاء بائت % 34(@)(@@) % إذا الليلة الطولي أمرت وأيبست % فللضيف منه متمر الليل رابت % 35(@)(@@) % ترى ما له سله الجود لا التي % % تناعر حوليها الحداة المصاوت % 36(@)(@@) % رخي البنان في النوائب كلما % % أضب على المال الحسيب المباكت % 37(@)(@@) % تهادى نساء الحي وصف حنانه % % و تأباه في الروع الرجال المصالت % 38(@)(@@) % ترى الحلم مشحونا وراء ردائه % % إذا مر ينزو الطائش المتهافت % 39(@)(@@) % فهل مبلغ عني خزيمة ما وعى % % حصاها البديد أو رباها الثوابت % 40(@)(@@) % و في لك مجدا ما تعدين في أبي % % قوام إذا خان الفروع النوابت % PageV01P300 41(@)(@@) % ولدت وأولدت الكبير ومثله % قليل وأمات الصقور مقالت % 42(@)(@@) % سبقت فلم يعلق غبارك جامح % وفت فلم يملك صفاتك ناعت % 43(@)(@@) % و جربك الأعداء غمزا وهزة % فما خدشت في مرويتك النواحت % 44(@)(@@) % فداك صديق وجهه وفؤاده % % معاد على دين المعالي معانت % 45(@)(@@) % يريك الرضا والغل حشو جفونه % و قد تنطق العينان والفم ساكت % 46(@)(@@) % طوى بغضة في جفنه فهو باسم % و في فيه ليث كاشر لك هارت % 47(@)(@@) % أهبت بشعري فانبرت لك عيسه % بما حملت وهي الخضوع الخوابت % 48(@)(@@) % فعادت بما أرعيتها ولبانها % % طواع على لي الحبال ضواغت % 49(@)(@@) % و نادتك لغوات السؤال فأفصحت % % يداك وأيدي المانعين صوامت 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms94# % 50(@)(@@) % و أوسعتني مالا أتى لم تخض له ال % % دياجي ولم تنفض عليه السبارت % PageV01P301 51(@)(@@) % و خلقا كما شعشعتها ذهبية % ببابل أهدتها إليك الحوانت % 52(@)(@@) % و لم تك حاشا مجد نفسك كامرئ % % تصامم عني وهو للمدح ناصت % 53(@)(@@) % و قوم كأن الشعر فيهم بلية % أعرت وعافتها الأكف الزوافت % 54(@)(@@) % فكن سامعا ما امتد باعك في العلا % % و سر محب أو تخيب شامت % 55(@)(@@) % ثناء فم الراوي عليك مسلم % به ومصلي الشكر باسمك قانت % 56(@)(@@) % تزورك منه في أوان فروضها % % قواف لها عند الكرام مواقت % 57(@)(@@) % يفدن الغنى أضعاف ما يستفدنه % و هن بقايا والعطايا فوائت % 58(@)(@@) % أقول لأيامي دعي لي أو خذي % % فما أنت إلا المقبلات اللوافت % 59(@)(@@) % فلست أبالي من تزيل ركبه % و ثابت لي على المودة ثابت % PageV01P302 البحر : - 1(@)(@@) % حماها بأطراف الرماح حماتها % % فلا حفلها منا ولا خلواتها % % 2(@)(@@) % و ذبب عنها من عقيل بن عامر % أراقم لا تحوي شباها رقاتها % % 3(@)(@@) % عشيرة مكلوء البيوت محصن % يعز بنوها أن ترام بناتها % % 4(@)(@@) % معودة طرد العيوب غيوبها % % إذا حفظت عوراتها أسلاتها % % 5(@)(@@) % و حرم واليها الولوع بذكرها % % و إن عتبت أخرى عليها سماتها % % 6(@)(@@) % فهل مغمز في جانب من ورائه % % سلامة يا قلبي وهذي حصاتها % % 7(@)(@@) % فكم في بيوت العامريات من هوى % % يناط كما نيطت بها خالفاتها % % 8(@)(@@) % و مثلك أسرى لا يسام فداؤها % % هوانا وقتلى لا تساق دياتها % % 9(@)(@@) % بلى لك منها في الكرى إن وفي الكرى % % و في الريح حظ إن جرت نفحاتها % % 10(@)(@@) % و ليل بذي ضال قصير طويله % % على البدن تطوي درجه ناجياتها % % PageV01P303 11(@)(@@) % ترى العيس في أجوازه بقلوبها % % إلى قصده ما لا ترى لحظاتها % % 12(@)(@@) % بها من حنين تحته ما بركبها % % و إن نطقوا الشكوى وطال صماتها % % 13(@)(@@) % إذا الريح قرت فاستهزت ضلوعهم % % تصلوا بما تذكى لهم زفراتها % % 14(@)(@@) % سرت بنشاوى من معاقرة السرى % % وسائدهم فوق الثرى ركباتها % % 15(@)(@@) % نضوا ما نضوا من ليلهم ثم هوموا % % غرارا وقد خاط العيون سناتها % % 16(@)(@@) % على ساعة جن الفلاة ووحشها % % تريها الشخوص الزور عنا فلاتها % % 17(@)(@@) % تخطت الينا الغور فالعرض فالحمى % % و ما ذاك ممشاها ولا خطواتها % % 18(@)(@@) % فبتنا لها في نعمة شكرت لها % % و 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms95# ما هي جدواها ولا أعطياتها % % 19(@)(@@) % عواطف دنيا في الكرى لو أردتها % % على مثلها يقظان عز التفاتها % % 20(@)(@@) % فلم أرها وعند قوم أداتها % % من العيش إلا وهي عندي أداتها % % PageV01P304 21(@)(@@) % سقى الله شرا دوحة لي سيالها % % و للناس ملقى ظلها وجناتها % % 22(@)(@@) % و لودا ولي من حظها بطن حائل % معنسة شابت وشاب لداتها % % 23(@)(@@) % أغامز منها صخرة إرمية % تفل النيوب وهي جلد صفاتها % % 24(@)(@@) % و كيف تسام النصف أم تلونت % معارفها إن حوشيت منكراتها % % 25(@)(@@) % ترى الوكل المغمور كحل لحاظها % % و كحل أخي الهم البعيد قذاتها % % 26(@)(@@) % هوت برؤس الناس سفلا وحلقت % بأذنابها مجنونة طائراتها % % 27(@)(@@) % فعندك منها أن ترى ببغاثها % % كواسب جوحص فيه بزاتها % % 28(@)(@@) % ركبت من الأيام ظهر ملون % صبائغه والخيل شتى شياتها % % 29(@)(@@) % و قلبتها يوما فيوما مجربا % % فلا سوءها يبقى ولا حسناتها % % 30(@)(@@) % سأحملها حتى تخف وسوقها % % و أحلم حتى ترعوى جهلاتها % % PageV01P305 31(@)(@@) % لعل مميت الحظ يحييه آنفا % فإن الحظوظ موتها وحياتها % % 32(@)(@@) % فلا يؤيسنك صدها من وصالها % % و لا مطلها من أن تصح عداتها % % 33(@)(@@) % ألم تر ملك المكرميين ناره % خبت غلطا ثم اعتلت وقداتها % % 34(@)(@@) % هفا الدهر فيهم مستغرا بغيره % % فخاضوا وشاكت رجله عثراتها % % 35(@)(@@) % بغى نقل ما أعطوا سفاها ولم تكن % % هضاب شروري زائلا راسياتها % % 36(@)(@@) % هم السحب ملء الأفق والدهر تحتها % % جفاء إذا سالت به سائلاتها % % 37(@)(@@) % علا السيل حتى الصين يفعم بحرها % % فيطغى وفي بغداد يجري فراتها % % 38(@)(@@) % حمى ناصر الدين العلا بعد من مضى % % فضمت قواصيها ولم شتاتها % % 39(@)(@@) % و أضحى بتاج الدولة العز مفرقا % % لها تتلظى فوقه خرزاتها % % 40(@)(@@) % و إن فروجا سدها مثل سعيه % % لضيقة أن ترتجى خطفاتها % % PageV01P306 41(@)(@@) % رعاها أبو الأشبال حتى دنا بها % % لها من شميم سرحها حسراتها % % 42(@)(@@) % أخو عزمات لا يراع صديقها % % كما لم ينم ولا تنام عداتها % % 43(@)(@@) % كريم المحيا رطبة قسماته % إذا ما الليوث استجهمت عابساتها % % 44(@)(@@) % على الصدر منه هيبة تملأ الحشا % % ممررة أخلاقه محلياتها % % 45(@)(@@) % و من رأيه في الحرب عضب وذابل % و ما الحرب إلا سيفها وقناتها % % 46(@)(@@) % كريم فما الأحساب إلا اقتناؤها % % لديه ولا الأموال إلا هباتها % % 47(@)(@@) % إذا اعترضته هزة الجود ساكنا % % نزت بالندى في كفه 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms96# نزواتها % % 48(@)(@@) % أفاد الندى فلم تزل برياضه % % رياح العلا أو صوحت شجراتها % % 49(@)(@@) % من القوم فضوا عذرة الأرض سادة % و شابت وهم أربابها وولاتها % % 50(@)(@@) % فمن حلمهم أركانها وجبالها % % و من جودهم أمواهها ونباتها % % PageV01P307 51(@)(@@) % و ليسوا كمن جن الزمان برفعه % % و جاءت به من دولة فلتاتها % % 52(@)(@@) % و لا كذبا طارت به الريح طيرة % فأقعصه أن طأطأت عاصفاتها % % 53(@)(@@) % تقيلتهم والنفس يكرم أصلها % % على عرقها الساري فتكرم ذاتها % % 54(@)(@@) % بك اهتز فرعاها وأنيع ظلها % % و طاب جناها وانتهت بركاتها % % 55(@)(@@) % جمعت لها سذان كل فضيلة % % تعز على من رامها مفرداتها % % 56(@)(@@) % فمن كان من قوم سفا في أديمهم % % و زعنفة تزري فأنت سراتها % % 57(@)(@@) % لئن عركت في جنب طودك نبوة % من الدهر لا تمحى بعذر هناتها % % 58(@)(@@) % و هز العدا من حسن صبرك صعدة % فقد علموا بالهز كيف ثباتها % % 59(@)(@@) % و ما كنت إلا الشمس ليثت جهامة % على خدها ثم انجلت غاشياتها % % 60(@)(@@) % تنصل منها المالك لما تبينت % لعينه أخراها ومعتقباتها % % PageV01P308 61(@)(@@) % و أبصرها شنعاء يبقى حديثها % % ذميما ولا تبقى له عائداتها % % 62(@)(@@) % فردك رد السيف في الغمد لم تعب % % مضاربه إن ثلمت شفراتها % % 63(@)(@@) % فكيف يليق الحسن أوجه دولة % إذا عدمت تيجانها خرزاتها % % 64(@)(@@) % رعى الله نفسا لا الغنى زادها علا % و لا فقرها حطت له درجاتها % % 65(@)(@@) % معظمة في حدها وسنانها % % و سلطانها لا ما حوت ملكاتها % % 66(@)(@@) % إذا قزعت يوما من الدهر نكبة % إليها عست فلم نسغها لهاتها % % 67(@)(@@) % و أنت الذي تعطي وعامك أشهب % عطاء رجال خضرت سنواتها % % 68(@)(@@) % مع الجود أني ملت غير مصرف % يمينك إلا حيث شاءت عفاتها % % 69(@)(@@) % أقلني أقلني جفوة ما اعتمدتها % % و هجرة أعوام خلت ما ابتداتها % % 70(@)(@@) % و سعيا بطيئا عن مقامي من العلا % % لديك إذا الأقدام فازت سعاتها % % PageV01P309 71(@)(@@) % فما كان إلا الحظ منكم حرمته % و دنيا كثير بالغنى فلتاتها % % 72(@)(@@) % تريد بنفسي كل ما لا تريده % % و تمنعها ما تقتضي شهواتها % % 73(@)(@@) % و إني لكم ذاك الذي لا حباله % % ترث ولا يخشى عليه انبتاتها % % 74(@)(@@) % مقيم على نعمائكم حافظ لها % % مضب على ما أوجبت حرماتها % % 75(@)(@@) % ينقل قوما قربهم وبعادهم % % و نفسي لا تهفو بها 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms97# مبدلاتها % % 76(@)(@@) % تحن إلى أيامكم في ذراكم % و تحفزها من عهدكم مذكراتها % % 77(@)(@@) % و عندي لكم ن أسخطتكم سوالفي % % عوائد ترضى مجدكم آنفاتها % % 78(@)(@@) % تسير على عاداتها بصفاتكم % % طوالع تمشي بالعلا مثقلاتها % % 79(@)(@@) % نوازل في عرض الفلا وصواعدا % ترد على روحاتها غدواتها % % 80(@)(@@) % تخال هواديها بنشر علائكم % % برود زوبيد نشرت حبراتها % % PageV01P310 81(@)(@@) % يقص بها تحت الظلام سميرها % % و ترجزكم وجه النهار حداتها % % 82(@)(@@) % تطربها الأسماع فيكم كأنما % % عزيف الملاهي ما تقول رواتها % % 83(@)(@@) % كأن الأولى دارت عليهم بيوتها % % بنو نشوة دارت عليهم سقاتها % % 84(@)(@@) % مبشرة أيامكم باتصالها % % ترى الحسن قبل أن ترى أخرياتها % % 85(@)(@@) % خوالد ما لبي الحجيج وطوفوا % % و عجت بسفحي مكة عرفاتها % % 86(@)(@@) % و ما عقروها واجبات جنوبها % % تفجر من لباتها فاجراتها % % 87(@)(@@) % تزوركم الأعياد مجلوة بها % % تحلى بما صاغت لكم عاطلاتها % % 88(@)(@@) % إذا لعنت قوما لئاما ما فإنما % % على ذكركم تسليمها وصلاتها % % PageV01P311 البحر : - 1(@)(@@) % أهفو لعلوي الرياح إذا جرت % و أظن رامة كل دار أقفرت % 2(@)(@@) % و يشوقني روض الحمى متنفسا % % يصف الترائب والبروق إذا جرت % 3(@)(@@) % متعللات بعد طارفة النوى % أو أبرأت داء الجوى أو عللت % 4(@)(@@) % يا دين قلب من ليالي حاجر % مكرت به فقضت عليه وانقضت % 5(@)(@@) % و مضاجع بالعنف بات يعدها % % غنما وأصبح وده لو لم يبت % 6(@)(@@) % و مليحة لو أنصفت عين المها % % في الحسن ما ثنت الصليف ولا رنت % 7(@)(@@) % بيضاء من كلل الخدور وربما % % ذكرت بداوة قومها فتسهمت % 8(@)(@@) % أخذت وأعطت من ضياء الشمس ما اح % % تكمت فجمعت الجمال ووفرت % 9(@)(@@) % و كأنما وليت خطائط وجهها % % يدها فجاءت في الكمد كما اشتهت % 10(@)(@@) % ملكت على بانات جو أمرها % % فلها الإمارة ما استقامت وانثنت % PageV01P312 11(@)(@@) % فإذا أرادت بالقضيب مساءة % و تنقمت جرما عليه تأودت % 12(@)(@@) % سنحت لنا دون الغدير فما سقى % صفو الغدير وعذبه من أعطشت % 13(@)(@@) % و رمت فلولا أنها ثعلية % قلنا رأت ثعلا رمى فتعلمت % 14(@)(@@) % غدرت فلولا أنها نذرت دمي % % لم تعرف النذر الذي فيه وفت % 15(@)(@@) % و على النقا والعيس تحفر في النقا % % أخفافها من ثقل ما قد حملت % 16(@)(@@) % حلفت على قتلي فلما أن رأت % % بذماي باقية الرماق تأولت % 17(@)(@@) % أبشر فانك في الحياة مخلد % يا 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms98# من رأى يوم القليب ولم يمت % 18(@)(@@) % و تشرفت لتشب جمرة صدره % بنت الأراك وهل تشب وما انطفت % 19(@)(@@) % ورقاء ذكرها الحداة هوى لها % % طارت ألائفها به فتذكرت % 20(@)(@@) % هتفت على خضراء كيف ترنمت % من فوقها مالت بها فترنحت % PageV01P313 21(@)(@@) % لو كان ينجو من علاقات الهوى % % شيء لضعف أو لمرحمة نجت % 22(@)(@@) % و لقد طربت كما حزنت لصوتها % % فشككت هل غنت بشجو أو بكت % 23(@)(@@) % قف يا أخا الملهوف وقفة مرسل % حمل الأمانة هضبة أو أديت % 24(@)(@@) % و اجهر بصوتك التي لو خاطبت % في السر أو عال القنان لأسمعت % 25(@)(@@) % و قل التحية والسلام وحاجة % من بعد أن خابت وإن هي أنجحت % 26(@)(@@) % يا أخت سعد فيم بات معذبا % % قلبي عليك كأنما عيني جنت % 27(@)(@@) % ردى الفؤاد علي فهو وديعة % مضمونة مغرومة إن ضيعت % 28(@)(@@) % إن كان ظنك بالخيانة والقلي % % أن يشمت اللاحي عليك فقد شمت % 29(@)(@@) % و عمية الأوضاح خرساء الصدى % % عشيت على ضوء الصباح وأظلمت % 30(@)(@@) % مردت على عين الدليل ورأيه % فتخاله فيها أضل بما خرت % PageV01P314 31(@)(@@) % تتغاير البوغاء شميمه % فيها وينكر صوته والملتفت % 32(@)(@@) % مركوبة جوب المهاري جوها % % غرر المقامر فيه أخست أو زكت % 33(@)(@@) % و إذا الركاب استيأست في جهلها % % كيف النجاء توكلت واستسلمت % 34(@)(@@) % داوستها أبغى العلاء بهمة % لو شاورت أم الشقيق لما سمت % 35(@)(@@) % تفلى على الكرماء تنفض منهم % طرق المطالب أسهلت أو أحزنت % 36(@)(@@) % و وراءها لولا المطامع منهم % قرباء لو قنعت بهم ما أبعدت % 37(@)(@@) % نبه بني عبد الرحيم ولا تبل % معهم عيون الدهر كيف استيقظت % 38(@)(@@) % و استفتهم في المجد تسأل أنفسا % % لقنت على جهل الورى وتفهمت % 39(@)(@@) % خبث التراب وما عليه وماؤها % % شرف فطابت وحدها وتطهرت % 40(@)(@@) % فكأن زاكي عرقها لم يسق من % % ماء الزمان وفي ثراه ما نبت % PageV01P315 41(@)(@@) % قوم إذا حدر التناكر لثمهم % و جلا الصفاح أكفهم فتحسرت % 42(@)(@@) % كفرت وجوههم البدور وآمنت % لأكفهم أيدي السحاب فكفرت % 43(@)(@@) % شفعوا العلاء تليده بطريفه % % فتقدمت علياؤهم وتأخرت % 44(@)(@@) % ولدتهم الأرض التي قد أجمعت % في الأكثرين فأكيست وتنجبت % 45(@)(@@) % جاءت بهم وهي الولود كأنهم % % غرباء جاءوا في العقام أو القلت % 46(@)(@@) % متواردين على العلاء كأنهم % % ضربوا له ميقات يوم لم 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms99# يفت % 47(@)(@@) % راضوا الأمور فتيهم كمسنهم % % سوم الكعوب تلاحقت فتنظمت % 48(@)(@@) % شرعوا إلى ثغر الخطوب ذوابلا % % لولا صنيعة نفسها ما فضلت % 49(@)(@@) % جوفا ترى الصم الصعاب وراءها % % في الحرب تقفو ما حذت أو مثلت % 50(@)(@@) % كتبوا على شهب الطروس لنا كما % % طعنوا على الخيل الوراد أو الكمت % PageV01P316 51(@)(@@) % و الجالس القوال منهم آخذ % منها بأنفاس الشجاع المنصلت % 52(@)(@@) % خذ من حديثهم حديث قديمهم % % و اعجب لأطراف العلا كيف التقت % 53(@)(@@) % و اسأل زعيم الدين عما خلفه % % من مجدهم فهو الشهادة والثبت % 54(@)(@@) % قمر هو المرآة عن أحسابهم % % مهما رأت مما يقابلها حكت % 55(@)(@@) % أدى فروضهم وسن نوافلا % % في المجد تممت الفروض وكملت % 56(@)(@@) % فضح السوابق مالك أشواطه % % جاري الرياح فحل عنه وقيدت % 57(@)(@@) % و تقرطت أيامه بيتيمة % منه صفت للناظرين وأشرقت % 58(@)(@@) % لم يدر جهد الغائصين وكيدهم % % من أي أصداف البحار استخرجت % 59(@)(@@) % قد جولوا فيها الظنون وأكثروا % % بالخوض لما استغربت واستعظمت % 60(@)(@@) % قالوا من البحر المحيط تصعدت % لا بل من الفلك المحيط تنزلت % PageV01P317 61(@)(@@) % بيضاء ملء يد المنى ملمومة % % ملك المنى وحوى الغنى من أعطيت % 62(@)(@@) % يا جامع الحسنات بعد شذوذها % % مزقا وموجدها أوان تعذرت % 63(@)(@@) % و مقطر الأقران عن صهوات ما % % ربطت من الرأي الأصيل وضمرت % 64(@)(@@) % كم واثق منهم بعصمة رأيه % % و حسابه من هفوة أو من غلت % 65(@)(@@) % ضايقته حتى أقر بعجزه % % لما وضعت لد يدك على النكت % 66(@)(@@) % و منطق ظن البلاغة آية % نصبت له علما وشخصا صورت % 67(@)(@@) % قال الكثير موسعا لهواته % عجبا فلما قلت واحدة سكت % 68(@)(@@) % حسب الفصاحة في التشادق وحده % % ما كل ما وصف الأسود به الهرت % 69(@)(@@) % و أرى الوزارة مذ حملت لواءها % % نصرت على فشل الولاة وظفرت % 70(@)(@@) % ساندت فيها ما عليك صلاحه % و فساده إن أصلحت أو أفسدت % PageV01P318 71(@)(@@) % ثنى أخوك أخاك فيها مسهما % % و بعثت ثالثها الذي بك عززت % 72(@)(@@) % أنتم فوارسها المذاود دونها % % إن حوربت وملوكها إن سولمت % 73(@)(@@) % و ظهوركم لصدورها مخلوقة % مظلومة إن ضويقت أو زوحمت % 74(@)(@@) % نصبت لكم وتمهدت فمتى طرا % % من غيركم طار نبت واستوحشت % 75(@)(@@) % هي ملككم فمتى استعيرت منكم % لتجمل وأردتموها استرجعت % 76(@)(@@) % أبناء نسبتها وأبعل عذرها % % و إذا عدتكم 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms100# أعزبت وتأيمت % 77(@)(@@) % تفدى أبا الحسن التراب وطئته % % قمم هوت من تحت رجلك إذ علت % % 78(@)(@@) % و محدث بك في الوساوس نفسه % % نفس لعمرك ضلة ما سولت % 79(@)(@@) % لو ثاقلوك به وألقي يذبل % معه لكانت قسمة ما عدلت % 80(@)(@@) % أغنيتني بك عن سواك فلم أبل % فتحت أنامل معشر أو أقفلت % PageV01P319 81(@)(@@) % و سقيت أعذب شربتيك فما أرى % % بأسا ببارقة همت أو أخلبت % 82(@)(@@) % و صفوت لي بالود والصهباء لم % % تشب العقول بطعمها حتى صفت % 83(@)(@@) % أنكرت ود أخي وعهد أحبتي % % و كريم عهدك طينة ما أخلقت % 84(@)(@@) % فمتى طلبت من الزمان سواك أو % % شرواك فاشهد أن ذاك من العنت % 85(@)(@@) % و لترضينك ما سمعت نواهض % بالشكر لم تخف اللغوب ولا ونت % 86(@)(@@) % يقضين ما أسلفن من ايدي غنى % وسعت حقوق المقرضين وأفضلت % 87(@)(@@) % يغنى بها العرض الفقير وإن رأت % % عرضا غنيا زيدته وأثلت % 88(@)(@@) % ريحانة ما استشفت أرواحها % % و سلافة تصحى إذا ما أسكرت % 89(@)(@@) % تقضي على الألباب أين خلاصها % % من شوبها ما استحظيت أو ألغيت % 90(@)(@@) % ضجت منابرها بدعوتها لكم % % فلو ادعت بكم النبوة صدقت % PageV01P320 91(@)(@@) % إن صاحبت يوما اليكم عاطلا % % حلته أو تفل النواحي عطرت % 92(@)(@@) % و المهرجان وكل يوم عاكم % % في لطفه مما كست أو زخرفت % 93(@)(@@) % فتملها وتمله متلوة % و مقابلا ما كر أو ما أنشدت % 94(@)(@@) % حتى ترى الأجداث تنفض أهلها % % و الشمس في خضرائها قد كورت % PageV01P321 البحر : - 1(@)(@@) % لمن الحمول سلكن فلجا % % يطلعنه فجا ففجا % % 2(@)(@@) % يخبطن بالأيدي الطري % % ق فما يكدن يجدن نهجا % % 3(@)(@@) % سود بما صبغ الهج % % ير جلودهن الحمر وهجا % % 4(@)(@@) % من كل حاملة الهلا % % ل بنى عليها البين برجا % % 5(@)(@@) % بيتا يسير وفيه قلب % % ك فهو جسمك خيل حدجا % % 6(@)(@@) % لك من وراء سجوفه % % ما أوسعتها الريح فرجا % % 7(@)(@@) % رمح ونصل لا كما % % سموهما هيفا وغنجا % % 8(@)(@@) % كالبيض لم تلح السما % % ثم كنهن فلحن بلجا % % 9(@)(@@) % لم أيسن من الظلا % % م رفعن لي فنظرن سرجا % % 10(@)(@@) % و على الطليعة فارد % كالرئم خاف فرام ملجا % % PageV01P322 11(@)(@@) % خالست قبلته الوشا % % ة ادغمت الحرف دمجا % % 12(@)(@@) % ففتحت عن غر تم % % ج المسك والصهباء مجا % % 13(@)(@@) % لو لم تكن مخلوقة % للرشف لم يخلقن فلجا % % 14(@)(@@) % و 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms101# مؤاخذ أن حرت يو % % م وداعه والبين يفجا % % 15(@)(@@) % لو كان خاصمني بعي % % شي وحده كان الأحجا % % 16(@)(@@) % و بسيطة دون العلا % % ء نفضتها نشرا ودرجا % % 17(@)(@@) % كلفت حاجاتي بها % % مرحا يرى التغرير أحجي % % 18(@)(@@) % و أخ صفوت كما صفا % % و مزجت لما شاء مزجا % % 19(@)(@@) % رمت التمام لوده % % و أراد إجهاضنا وخدجا % % 20(@)(@@) % أمعي هزيلا ثم أن % % ت علي إن أعطيت نفجا % % PageV01P323 21(@)(@@) % و مفارق لي كابن عيسى غم أيامي و % % أرجى % 22(@)(@@) % راودت قلبي عن نوا % % ه فكلما لاطفت لجا % % 23(@)(@@) % و حملتها كالداء أش % % رج فوقه الأضلاع شرجا % % 24(@)(@@) % متنظرا هذا الإيا % % ب لعرها كيا ونضجا % % 25(@)(@@) % فإن انتصرت بقربه % % فلقل صبرت وكنت ملجا % % 26(@)(@@) % أو عدن أيامي الحسا % % ن به فقد أسلفن سمجا % % 27(@)(@@) % يا بن الوزارة أثبتت % في بيته وتدا أشجا % % 28(@)(@@) % أبلى وأخلق قومه % أثوابها فورثن نهجا % % 29(@)(@@) % يتنقلون على مرا % % كبها فما يضعون سرجا % % 30(@)(@@) % و مشت أمور بعدهم % % بمعاشر فمشين عرجا % % PageV01P324 31(@)(@@) % من آل ماسرجيس مح % % سود العلا يخشى ويرجى % % 32(@)(@@) % متقيل في المجد سن % % ة مغرمين به ألجا % % 33(@)(@@) % جارين سد الجو شو % % طهم وشق الأرض رجا % % 34(@)(@@) % فصل الخطابة ناطق % ما قال إلا كان فلجا % % 35(@)(@@) % مستردفا يده وأخ % % رس عج في القرطاس عجا % % 36(@)(@@) % كالرمح صدره % و كعوبه نصلا وزجا % % 37(@)(@@) % هذا يمج بما يخ % % ط وذاك يخد درجا % % 38(@)(@@) % ملك السماح يديه يم % % رج فيهما العافين مرجا % % 39(@)(@@) % مغري بأثقال النوا % % ل يخالها دينا وخرجا % % 40(@)(@@) % سوغتني ودا غبر % % ت برنقه غصان أشجى % % PageV01P325 41(@)(@@) % و سحرتني بخلائق % كن العيون فكن دعجا % % 42(@)(@@) % فلتطرقنك ما بكر % % ن غواديا وسرين دلجا % % 43(@)(@@) % زهر كثابته النجو % % م سوائر يهدجن هدجا % % 44(@)(@@) % موسومة بك أنك ال % % مقصود فيهن المرجى % % 45(@)(@@) % ما أنشدت خلت البرو % % د عرضن تفويفا ونسجا % % 46(@)(@@) % و سواك يسمعها فيح % % زن سمعه من حيث يشجى % % 47(@)(@@) % يرتاب منها بالثنا % % ء كأنه بالمدح يهجى % % 48(@)(@@) % خادعته فأضر بي % % غشى وكان الصدق أنجى ة % % 49(@)(@@) % فتملها ما راح سر % % ح أو رأيت البيت حجا % % PageV01P326 البحر : - 1(@)(@@) % أشوقا و من تهوى خلي الجوانح % لك الله من وافى الأمانة ناصح . % 2(@)(@@) % فما كل عهد بالسليم على النوى % % و لا كل 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms102# ثاو حافظ عهد نازح % 3(@)(@@) % حبيبك من خلفت بين ضلوعه % % و سرت فؤادا لا يلين لكاشح % % 4(@)(@@) % لمن منزل أنكرته فعرفته % % و قد راح أهلوه بطيب الروائح % 5(@)(@@) % خليلي والواشون حولى عصابة % فمن مسرف في لومه ومسامح % 6(@)(@@) % أجل في جناب الركب طرفك هل ترى % % أسى بارحا أو طائرا غير بارح % 7(@)(@@) % و خلف الستور الرقم من كان بينه % على طول ما سترت حبي فاضحى % % 8(@)(@@) % و هبت له عيني وقلبي وإنما % % لعزته هانت علي جوارحي % % 9(@)(@@) % أفي كل دار صاحب أصلحت له الر % % عاية قلبي وهو لي غير صالح % 10(@)(@@) % و خاطب شكر يرخص البخل مهره % عليه فيمسي وهو الأم ناكح % PageV01P327 11(@)(@@) % أهز بعتبي منه طودا كأنني % % أريد لأكسو العير جلدة سابح % % 12(@)(@@) % إذا ما عليل البخل لم يبر داءه % % مخافة هاج لم يثب قول مادح % 13(@)(@@) % بلى . في فتى من أسرتي إن شكرتها % % منائح تعطيه حلالامدائحي % % 14(@)(@@) % هنيئا لكم يا طالبي سيب كفه % % أبيحت قليبا فليفز دلو ماتح % 15(@)(@@) % يخيم غاد للسؤال ورائح % بساحة غاد للسماحة رائح % 16(@)(@@) % صباحك واليروز يجلوه فانعمن % % رأي خير مصبوح رأي خير صابح % 17(@)(@@) % هو الجدع فاستقبل به بكر عامه % % و إن كان مما كر في سن قارح % 18(@)(@@) % إذا وجه يوم غيره كان عابسا % % تبسم عن ساعات أبلج واضح % % 19(@)(@@) % و عش بين جد للخطوب محارب % حرى وجد للسعود مصالح % 20(@)(@@) % سليما على الأيام طرا طوالها % % رقاق العشايا يا صالحات المفاتح % PageV01P328 البحر : - 1(@)(@@) % لها بعد خطو لات حين مراح % قضاء بوصل غدوة برواح % 2(@)(@@) % و هل هي إلا رقدة فاسمحا بها % % و حسبكما أن توقظا لسماح % 3(@)(@@) % و إلا فسير الريح أسرع طية % و كم هب لي شوق هبوب رياح % 4(@)(@@) % أقول لها والنهروان طريقها % % هناك اسنحى لا زلت طير نجاح % 5(@)(@@) % ألمى بها في السحب ثم تحفلي % % فسحبي تحياتي بأنضر ساح % 6(@)(@@) % و قولي سلام يا بن روح تظنه % % صبيبة طل في صبابة راح % 7(@)(@@) % شكوت فيا للشوق أين تصبري % % و نمت فيا لليل أين صباحي % % 8(@)(@@) % و غرك إسماحي فسرك أن ترى % % إذا عنف المقتاد كيف جماحي % % 9(@)(@@) % رعى الله ظبيا ساحا لي رعته % % بنفرة قلب للعقوق 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms103# مباح % 10(@)(@@) % و توهب للعذر الصراح مودتي % % لديك وبعض العذر غير صراح % PageV01P329 11(@)(@@) % رسائل تعدوني وكتب تجوزني % % صداي على ماء يذاد قراح % 12(@)(@@) % تلوح لعيني كلما مر خاطف % % بناحية منها بكت بنواحي % % 13(@)(@@) % بمن ليت شعري وهي ليت تعجب % يرد شبابي إن حملت سلاحي % % 14(@)(@@) % أبن لي هل جاذبتني في مودة % فعيرتني يا صاح عيرة صاح % 15(@)(@@) % و هل رمت أسباب السماء لبغية % فحلقت إلا طائرا بجناحي % % 16(@)(@@) % سقى الله نفسي كيف يكرم عهدها % % على نفر ممن أحب شحاح % 17(@)(@@) % أروم انتصارا منك ثم يردني % % هوى لم تدنسه ملامة لاحي % % 18(@)(@@) % فأغمد في الود الحداد صوارمي % % و أكسر في الحب السداد رماحي % % 19(@)(@@) % فلا تنكرن هذي العوائد إنما % % لساني سكران وقلبي صاحي % % 20(@)(@@) % و لا تلزمني في العتاب بقية % فسادك فيها فاتك بصلاحي % % PageV01P330 21(@)(@@) % و لما أتاني ما أقر جوارحي % % و أبرأ من تلك الهنات جراحي % % 22(@)(@@) % خلطت التهاني بالتشاكي مرجيا % بموضع جدي أن يكون مزاحي % % 23(@)(@@) % و بعد فيا لله أية فرحة % تخبرني عن أي فوز قداح % 24(@)(@@) % إذا كانت الجوزاء للمشتري حلى % و كان قباح غيرها لقباح % 25(@)(@@) % فما اتفق السعدان حتى تكافآ % % أعز في أعز بطاح % 26(@)(@@) % و لو قيل غير الشمس سيقت هدية % إلى البدر لم أفرح له بنكاح % 27(@)(@@) % فأنتم بنو مال على الدهر هالك % وقاء لأعراض عليه صحاح % 28(@)(@@) % شباب مراجيح تفرعت النهي % % بهم عن شيوخ في الندى ملاح % 29(@)(@@) % تعقب غدا يمنا وسعدا بها أبا ال % % حسين وسعيا مؤذنا بنجاح % 30(@)(@@) % كأنك بالأشبال حولك ربضا % % ليوم رواء أو ليوم كفاح % PageV01P331 31(@)(@@) % صباحا صباحا كل يوم بشارة % إلى سبعة مثل البدور صباح % PageV01P332 البحر : - 1(@)(@@) % ما كان سهما غار بل ظبي سنح % إن لم يكن قتل الفؤاد فقد جرح % 2(@)(@@) % جلب الجمال يريد أنفسنا به % % ثمنا فتاجرناه فيه كما اقترح % 3(@)(@@) % أرجت جنان السفح فيه بنافض % ردنيه عن عرف الجنان إذا نفح % 4(@)(@@) % عرق المجاسد فاض ماء شبابه % % و الورد أطيب منه ريحا ما رشح % 5(@)(@@) % في جيده الكافور سبحة عنبر % ما كان أغفلني وليس عن السبح % 6(@)(@@) % و أما ومشيته توقر تارة % % صلفا وأحيانا يجن من المرح % 7(@)(@@) % و مواعد لي في خلال 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms104# وعيده % % مزجت بدمع صبابتي دمع القدح % 8(@)(@@) % لأشاطرن هواه جسمي إن وفى % و لأبخلن على العواذل إن سمح % 9(@)(@@) % راحت تعنف في الصبا ما آن أن % % يثنيك عن أشر الثني نهى القرح % 10(@)(@@) % و الخمس والعشرون تعذر فاسدا % % لو ناهزته الأربعون وما صلح % PageV01P333 11(@)(@@) % مناك ظنك بي غرورا أنني % % أصحو وفي الظن المحال المطرح % 12(@)(@@) % كالليث والغمر استغر بثغره % % فدنا إليه فاسئلي عما كلح % 13(@)(@@) % و الصاحب التمس الغمام تشبها % % بيديه لا جرم انظري كيف افتضح % 14(@)(@@) % جاراهما ويكاد يغرق فيهما % % بالجود إلا أنه فيه سبح % 15(@)(@@) % للعز ما منع الحسين فلم تنل % % كف الزمان وللمكارم ما منح % 16(@)(@@) % إن هم أبصر غايتيه بحزمه % % كالطرف يدرك نوره أني طرح % 17(@)(@@) % أو جد في خطب كفاه ووجهه % % متبسم فيقول حاسده مزح % 18(@)(@@) % كم نعمة لم تلهه عن عصمة % و جماد عام لم يعقه أن انفسح % 19(@)(@@) % و مدامة عذراء بات نديمها % % و بغارة شعواء يومئذ صبح % 20(@)(@@) % رفقا فجربه وقل في ناره % % إن أضرمت وقد اشتواك بما لفح % PageV01P334 21(@)(@@) % و اهتز كلكله فكنت سحيقة % بددا فأين يكون ركنك إن نطح % 22(@)(@@) % بي أنت ضج السيف حتى إنه % % لو كان يوم يسل ذا صوت لبح % 23(@)(@@) % و شكا جوادك في الضوامر بثه % % لما استراحت وهو تحتك لم يرح % 24(@)(@@) % طرف تعود أنه لو طارد ال % % ريح الشمال عليه فارسه بطح % 25(@)(@@) % و أغر يسرج يوم يسرج وجهه % زهر الكواكب قام فيها أو سرح % 26(@)(@@) % و مؤدب الأعضاء لا يهفو به % % جنباه ما حس الغلام وما مسح % 27(@)(@@) % فسواه ما خلع اللجام ومد طغ % % يانا وما منع الركاب وما رمح % 28(@)(@@) % و لك المقام زأرت فيه والقنا % % أجم فهان على عرينك من نبح % 29(@)(@@) % و الرأي أعجزه الصواب فلم يشر % فيه سواك ولو أشار لما نصح % 30(@)(@@) % أمؤاخذي كرما علي قضيته % إن ضاق عنه لسان شكري أو رزح % PageV01P335 31(@)(@@) % غفرا متى قصرت عنك فإنني % % بالمدح أولى لو بلغتك بالمدح % 32(@)(@@) % هذا ولم تحفزك قدرة خاطري % % ما جاءه عفوا وما فيه كدح % 33(@)(@@) % كم نومة للعاشقين وهبتها % % ليلا أراقب ديكه حتى صدح % 34(@)(@@) % و الليلة البهماء تولد فكرتي % % غراء يحسدها الصباح 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms105# إذا وضح % 35(@)(@@) % و لأنت باستحسانها أنطقتني % % و شرحت بالإكرام صدري فانشرح % 36(@)(@@) % و نسيت ما أعطيتنيه وفيهم % حاشا سماحك من إذا أعطى لمح % 37(@)(@@) % فلغيرك المتسهل المبذول في اس % % ترخاصه ولك الغرائب والملح % PageV01P336 البحر : - 1(@)(@@) % لمن الحمول بجو ضاحي % % من باكر غلسا وضاحى % % 2(@)(@@) % مثل الأداحي تحتها % % أمثال أمات الأداحي % % 3(@)(@@) % يحملن أقمارا حمل % % ن السقم في مقل صحاح % 4(@)(@@) % من دون أطراف الحدي % % ث لهن أطراف الرماح % 5(@)(@@) % من مخبري عن رائح % % ين نكرت بعدهم مراحي % % 6(@)(@@) % هيهات لو صدق الدلي % % ل سألت ليلي عن صباحي % % 7(@)(@@) % و النجم يحمل كأسها % % منها الحباب بغير راح % 8(@)(@@) % حظر الكرى من لا يطا % % ع سواه في حظر المباح % 9(@)(@@) % راض إذا سفك الدما % % ء بما تقلد من جناح % 10(@)(@@) % كثر الملاح وما له % % مثل بإقرار الملاح % PageV01P337 11(@)(@@) % بأبي ثناياه لقد % % غولطت عنها بالأقاحي % % 12(@)(@@) % غلط المقايس بابن أي % % وب السحابة في السماح % 13(@)(@@) % و محمد أزكى نسي % % م ثرى وأندى بطن راح % 14(@)(@@) % و أعتم حين يخص جو % % د الغيث ساحا بعد ساح % 15(@)(@@) % طالت به عين إلى ال % % علياء واسعة الطماح % 16(@)(@@) % و يد تقلب أنملا % % ت مكارم سبط سجاح % 17(@)(@@) % لم تدر أن الله خا % % لق هذه الأيدي الشحاح % 18(@)(@@) % من معشر يتذممو % % ن المال ليس بمستباح % 19(@)(@@) % لا يطعمون مع العش % % ي حلاوة النعم المراح % 20(@)(@@) % فإذا تزاحمت الوفو % % د على بيوتهم الفساح % PageV01P338 21(@)(@@) % يسروا فكان لمن يفو % % ز بضيفه فوز القداح % 22(@)(@@) % في عرضهم سرف القصا % % ص وما لهم هدر الجراح % 23(@)(@@) % فإذا انتضوا زبر الصحا % % ئف ثلموا زبر الصفاح % 24(@)(@@) % و إذا قيامة سؤدد % كذبتك في الصور القباح % 25(@)(@@) % بلجوا على ضوء الصبا % % ح ببهجة الغرر الصباح % 26(@)(@@) % لبيك عدة ما اكتسب % % ت وقد دعوتك من صلاح % 27(@)(@@) % و ضممتني والدهر مج % % تمع الصروف على أطراحي % % 28(@)(@@) % و إذا شهرت عليه سي % % فا عاد يدميني جراحي % % 29(@)(@@) % قد كنت مقترحا فجا % % ء بك الزمان على أقتراحي % % 30(@)(@@) % لا توسعني من نوا % % لك فوق ما يسع امتداحي % % PageV01P339 31(@)(@@) % دعني أطير بشكره % % ما دام يحملني جناحي % % 32(@)(@@) % في كل شاردة مبا % % عدة الغدو مع الرواح % 33(@)(@@) % بكر ولود من بنا % % ت الناتجات بلا 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms106# لقاح % 34(@)(@@) % أحبوك منها كل عي % % د بالخريدة والرداح % 35(@)(@@) % تصف اللطائم طيبها % % من طيبك الشرف الصراح % % 36(@)(@@) % ما كسرت رجم الجما % % ر وسوقت بدن الأضاحي % % PageV01P340 البحر : - 1(@)(@@) % أغش بآمالي كأني أنصح % و أبقى لأشقى بالبقاء وأفرح % 2(@)(@@) % و أصبو إلى وجه من الدهر مسفر % ضحوك ووجهي في الخمار مكلح % 3(@)(@@) % و يعجبني إملاء يوم وليلة % و ما الموت إلا غابق أو مصبح % 4(@)(@@) % مطلت بديني والغريم مصمم % و أحسنت ظني والمسيء مصرح % 5(@)(@@) % تدمى المنايا الناس حولي وإنما % % دمي ذاك في أثوابهم يتنضح % 6(@)(@@) % و أسلو إذا أبصرت جلدي أملسا % % و ما صحة في الجلد والقلب يجرح % 7(@)(@@) % إذا مر يستقري من الهالك الردي % % يميل في أبنائه ويرجح % 8(@)(@@) % تطامنت أرجو أن أفوت لحاظه % % فأخفي وعين الموت زرقاء تلمح % 9(@)(@@) % و قد غرني ليل الشباب فأين بي % % أضل وفجر الشيب عريان مصبح % 10(@)(@@) % و أقرب شيء من قضيب جفوفه % إذا الورقات الخضر ظلت تصوح % PageV01P341 11(@)(@@) % تتيم بالعمر الجذاع وخانهم % % فما لي أرجو وده حين أنزح % 12(@)(@@) % و قد كان قدامى مدى منه يرتجى % % هو اليوم ملقى من ورائي يطرح % 13(@)(@@) % حسوت بمر الدهر حبا لحلوه % % فطورا يصفى لي وطورا يصبح % 14(@)(@@) % إذا برني في صاحب بز صاحبا % % أغنى بشعري تارة وأنوح % 15(@)(@@) % أبيح التراب أوجها كان مسخطي % % على الشمس منها الساهم المتلوح % 16(@)(@@) % و أحثو بكفي أو أشق حفيرة % يهال على قلبي ثراها ويصرخ % 17(@)(@@) % ترى الحق مطروفا وتعشى لواحظ % يراقصها هذا السراب الملوح % 18(@)(@@) % يود الفتى أن البسيطة داره % و ما فوقها مال عليه يروح % 19(@)(@@) % و سيعة بطن جل ما هو محرز % و مطرح جنب جهد ما يتفسح % 20(@)(@@) % تبايعنا الدنيا منى بنفوسنا % % فتوكس غبنا والمبايع مصلح % PageV01P342 21(@)(@@) % فلا نحن من فرط الخسارة نرعوي % % و لا هي ترضى فرط ما هي تربح % 22(@)(@@) % فما لك يا دنيا وأنت بطينة % و نحن خماص تبخلين ونسمح % 23(@)(@@) % ألا طرقت لا يملأ الليل صدرها % % و لا تتحاشى صارخا حين تصبح % 24(@)(@@) % مغلغلة لا طود يعصم ما ارتقت % % و لا موئل من حيث تهبط أبطح % 25(@)(@@) % وصولا إلى البيت الذي تستضيفه % % و لا موقد يوري ولا كلب ينبح % 26(@)(@@) % لها 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms107# من قرى ما استصلحت وتخيرت % حشايا توطى أو صفايا تذبح % 27(@)(@@) % أصابت صريح المجد من حيث ينتمي % % و غضت لحاظ الفضل من حيث تطمح % 28(@)(@@) % و حلت فحكت بركها من محمد % بجانب ركن لم يكن قبل ينطح % 29(@)(@@) % قويم على عرك الخطوب فما له % % و قد زحمته زحمة يتطوح % 30(@)(@@) % سلا مقعص الأقران من أي طعنة % تقطر عن ظهر الكفاية يطرح % PageV01P343 31(@)(@@) % و قاطع مثناة الحبال حرانه % بأي زمام قيد يعنو ويسمح % 32(@)(@@) % و من هز من بين الوسائد طوده % و في دسته ثهلان لا يتزحزح % 33(@)(@@) % و قولا وإن لم يخرق الترب صائح % إليه ولم يفهم صدى الأرض موضح % 34(@)(@@) % أبا حسن أما الرجاء فخائب % % و أما الرجا فيما نعاك فمنجح % 35(@)(@@) % حملت الرزايا جازعا ثم صابرا % % على ذاك حسن الصبر بعدك يقبح % 36(@)(@@) % و واصلت من أحببت ثم فقدته % فما نازل إلا وفقدك أبرح % 37(@)(@@) % ذكرتك إذ غص الندي فلم يشر % نصيح ولم ينطق لسان مفصح % 38(@)(@@) % و لا أضمرت صدقا معاقد حبوة % جثا بفخار ربها يتبجح % 39(@)(@@) % و قد غاض بحر كان فكرك مده % % و أرتج باب كان في فيك يفتح % 40(@)(@@) % و قد جاء نجم من جمادى بليلة % بليل يريك الطول أن ليس تصبح % PageV01P344 41(@)(@@) % يسائل عن أطناب بيتك ضيفها % % ردائد خطف البرق فيما تلوح % 42(@)(@@) % تعيف طيرا بارحات يسرنه % بفقدك قد كانت ميامين تسنح % 43(@)(@@) % فبات صعيد الأرض والريح زاده % شقيا بما يستاف أو يتنقح % 44(@)(@@) % بليلة بؤس فات معتامها القرى % % كما فاتها منك المصلى المسبح % 45(@)(@@) % و للأمر كنت الليث إما حفظته % تعاوت تعاطاه ثعالب تضبح % 46(@)(@@) % رعى بعدك الشق الذي كنت حاميا % له وعتا الخرق الذي كنت تنصح % 47(@)(@@) % و خلى للعجز التنافس واستوى % % على الجهل سرح سائم ومسرح % 48(@)(@@) % و قام رجال كان فضلك مقعدا % % لهم فتراءوا للعلا وترشحوا % % 49(@)(@@) % بلا عائب تزري على سيئاتهم % % محاسنه والنقص بالفضل يفضح % 50(@)(@@) % لئن حرصوا فيما عمرت تعافه % فربت ساع للدنية يكدح % PageV01P345 51(@)(@@) % تمالوا على ما كنت تأباه أوحدا % و منوا بما استضعفته وتمدحوا % % 52(@)(@@) % و ما ازدحموا أن القذى بعدك انجلى % % عن الماء لكن يشربون وتقمح % 53(@)(@@) % فداك وهل حي فداء 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms108# لميت % قصير الخطا يكبو بما كنت تجمح % % 54(@)(@@) % تعجب لما ساد من حظ نفسه % % و قد يدرك الجد الدني فيفلح % 55(@)(@@) % و لما رأيت الدهر ضاقت ضلوعه % بحملك وهي للئام تفسح % 56(@)(@@) % أنفت من الدنيا الذليلة عارفا % % إذا عيشة ضامتك فالموت أروح % 57(@)(@@) % و ذكرنيك الود أحليت طعمه % % و أصفيت فهو الآن يقذي ويملح % 58(@)(@@) % ضربت عن الإخوان صفحا مؤملا % % بأن الردى لي عنك وحدك يصفح % 59(@)(@@) % و أغنيتني ودا ورفدا بحاجة % من اليوم ما أرتاد أو أتمنح % 60(@)(@@) % أعلل نفسي عنك لو أن مسقما % % يفيق بنوع من جوى أو يصبح % PageV01P346 61(@)(@@) % و أرقع أيامي أروم صلاحها % % و قد فسد العيش الذي كنت تصلح % 62(@)(@@) % سألت بك الأيام أرجو مسرة % فلما أبت إلا التي هي اترح % 63(@)(@@) % ضحكت إلى ناعيك أحسب أنه % % و قد جد إكبارا ليومك يمزح % 64(@)(@@) % عفا ربع أنسي منك ضيقا وما عفا % % بساحة قلبي منزل لك أفيح % 65(@)(@@) % به ساكن من طيب عهدك عامر % يريح عزيب الحزن من حيث يسرح % 66(@)(@@) % إذا ذبلت فيه على الصبر جمرة % خمودا ورى زند من الذكر يقدح % 67(@)(@@) % و ذاك اللسان الرطب لا زال في فمي % % هو اليوم يرثي مثله أمس يمدح % 68(@)(@@) % يقول وإن لم يغن عنك وإنما % % ملأت إناء نعمة فهو يرشح % 69(@)(@@) % و لو رد قبلي الموت بالشعر أو مضى % % شبا لسن أو عاش في الدهر مفصح % 70(@)(@@) % نجا لائذا بالعز في غير قومه % % و قد سبق الناس الغريب المقرح % PageV01P347 71(@)(@@) % و مستنزل النعمان عن سطواته % % ينتقي من عذرة وينقح % 72(@)(@@) % و عروة لم يصغ الردى لنسيبه % % و لم يعط في قيس مناه الملوح % 73(@)(@@) % و غير غيلان المهاري بعنسه % فلم تنجه من عدوة الموت صيدح % 74(@)(@@) % و لكنه شرط الوفاء وغمة % على الصدر باستخراجها أتروح % 75(@)(@@) % ذممت فؤادي فيك والحزن محرق % و عاتبت جفن العين والدمع مقرح % 76(@)(@@) % و ما عجب للدمع أن ذل عزه % % فما جم إلا أنه لك ينزح % 77(@)(@@) % و أقسم ما جازاك قلب بما طوى % % غليلا ولا قول يطول فنشرح % 78(@)(@@) % و لا كان في حكم الوثيقة أن أرى % % عليك الثرى كلا وجسمي ريح % 79(@)(@@) % و ما أنا 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms109# إلا قاعد عن فضيلة % إذا قمت فيها مائلا أترنح % 80(@)(@@) % سقاك وإن كان الثرى بك غانيا % % عن السحب غاد بالحيا متروح % PageV01P348 81(@)(@@) % حمول لماء المزن تطفو لصوبه % % فواغر أفواه الجواء فتطفح % 82(@)(@@) % إذا خار ضعفا أو تراخى حدت به % % مواقر من نوء السماكين دلح % 83(@)(@@) % يجفل طرد الريح فيها كأنها % % سفين جوار أو مراسيل جنح % 84(@)(@@) % شجاع كأنت أو جواد بمائه % % فإن عاقه ضن فعيني تسفح % 85(@)(@@) % ليعلم قبر بالمدينة أنني % % من الغيث أوفي أو من الغيث أسمح % PageV01P349 البحر : - 1(@)(@@) % أمرتكم أمري بنعمان ناصحا % % و قلت احبسوها تلحق الحي رائحا % % 2(@)(@@) % فماريتموني تخبرون اجتهادها % % فأبتم بلا حاج وأبن طلائحا % % 3(@)(@@) % و قد صدقتني في الصبا عن مكانهم % % أخابير أرواح سبتني نوافحا % % 4(@)(@@) % كأن الثرى من طيبها فت فوقه % % مجيزون من دارين فأرا فوائحا % % 5(@)(@@) % لقاء على نعمان كان غنيمة % و هيهات يدنو بعد أن فات نازحا % % 6(@)(@@) % حمى دونه حر السماوة ظهرها % % و عبس وجها ناجر فيه كالحا % % 7(@)(@@) % إلى الحول حتى يشرب القيظ ماءهم % % بنجد وإما يسلخون البوارحا % % 8(@)(@@) % لعلك في إرسالي الدمع لائم % و قد عطف الناس المطي جوانحا % % 9(@)(@@) % نعم قد تجرعت الدموع عليهم % عذابا وأقرحت الجفون الصحائحا % % 10(@)(@@) % و ما قلت غاضت بالبكاء ركية % من العين إلا أرسل الشوق ماتحا % % PageV01P350 11(@)(@@) % فهل ظبية بالغور يجزي وفاؤها % % هوى لم يطع فيها على النأي كاشحا % % 12(@)(@@) % إذا اعترضته من سلو معوضة % محاسن في أخرى رآها مقابحا % % 13(@)(@@) % و من أين ينسى من يرى الغصن مائلا % % مثالك والظبي المروع سانحا % % 14(@)(@@) % أرى عينه عينيكو الغور بيننا % % فأدمى لقد أبعدت يا سهم جارحا % % 15(@)(@@) % يعنف في حب البداوة فارغ % من الوجد لم يقر الغرام الجوانحا % % 16(@)(@@) % فيا ليت لي من دار قومي واسرتي % % جوارك رواحا عليك وصابحا % % 17(@)(@@) % و من ترهات الريف أرضا قطنتها % % من الجدب فيها يأكلون النواضحا % % 18(@)(@@) % إذا ما شربت الوصل عذبا مرقوقا % % بها لم أعف أن أشرب الماء مالحا % % 19(@)(@@) % دعوني ونعمان الأراك أروده % % يجاوب صوتي طيره المتناوحا % % 20(@)(@@) % عسى سارح من دار مية يامن % يقيض لي عن شائم طار بارحا % % PageV01P351 21(@)(@@) % سقى ما سقت خدي الدموع الحيا الغضا % % بواكر من جماته وروائحا 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms110# % % 22(@)(@@) % فكم ليلة فيه نضوت حميدة % و ألبست يوما برقع العيش صالحا % % 23(@)(@@) % وهم ترى القلب الرحيب وراءه % % من الضيق لهفا يستعيب المراوحا % % 24(@)(@@) % تلطفته حتى وجدت مفارجا % % لصدري من غماته ومسارحا % % 25(@)(@@) % و بحر من الآل الغرور محرم % ركبت له من سير لاحق سابحا % % 26(@)(@@) % إلى حاجة في طرقها الجد كله % % فأدركتها جذلان أحسب مازحا % % 27(@)(@@) % و مضطغن أن قدمتني زوائد % من الفضل أخفته وقد كان واضحا % % 28(@)(@@) % يعيرني الحدثان وهو أعز لي % % كفى جذعا أن فاتك الشوط قارحا % % 29(@)(@@) % و هل ضائري شيئا إذا جئت آخرا % % تأخر ميلادي وقد جئت فاصحا % % 30(@)(@@) % و هر فلم يطرد فعض سفاهة ؛ % و عقرك لي أني حقرتك نابحا % % PageV01P352 31(@)(@@) % و زنت بحلمي جهله لا أجيبه % % فلله منا من تمكن راجحا % % 32(@)(@@) % و عجماء من وحش القوافي خدعتها % % و لم تعط قبلي جلدها قط ماسحا % % 33(@)(@@) % خطبت إليها عذرها فتحللت % و كانت حراما لا تلامس ناكحا % % 34(@)(@@) % و عادتها في المدح ألا أذيلها % % و لكن قوما يكرمون المدائحا % % 35(@)(@@) % تمنى بني عبد الرحيم ومجدهم % % رجال أمان لم يقعن نجائحا % % 36(@)(@@) % و ريموا فما حط الثريا لباعه % % فتى ظنها كفا فمد مصافحا % % 37(@)(@@) % كرام مضوا بالجود إلا صبابة % أعاروا نداها الهاطلات السوافحا % % 38(@)(@@) % لهم من تليد العز ما يدعونه % % إذا خفت في دعوى الحسيب القوادحا % % 39(@)(@@) % إذا نشروا الأغصان من شجراتهم % % على ناسب عدوا الملوك الجحاجحا % % 40(@)(@@) % تواصوا فطابوا في الحياة وأكرموا % % نفوسا وطابوا ميتين ضرائحا % % PageV01P353 41(@)(@@) % و أخفى الحسين خطفهم بشعاعه % كما أخفت الشمس النجوم اللوائحا % % 42(@)(@@) % فتى لا يريد المجد إلا لنفسه % % و لا المال إلا قسمة ومنائحا % % 43(@)(@@) % ينازع أزمات السنين بأنمل % جوابر للأحوال تسمى جوارحا % % 44(@)(@@) % أنامل من يسر إذا ما أدارها % % على مغلقات الرزق كن مفاتحا % % 45(@)(@@) % أقام على وجه الطريق بوجهه % % مجير النهار عاقر الليل ذابحا % % 46(@)(@@) % بحيث السماح لا يخيب سائلا % % وحد الصفاح لا يخيبن صائحا % % 47(@)(@@) % إذا عجزت يوما مواعظ صفحه % % عن الأمر ولاه القنا والصفائحا % % 48(@)(@@) % و يأبى فيأتي مشرع الدم واردا % % حريصا ويأتي مشرع الماء قامحا % % 49(@)(@@) % يصيب بأطراف العوالي محاربا % % عداه وأطراف الكلام مصالحا % % 50(@)(@@) % إذا هز رمحا طاعنا خيل كاتبا % % سدادا 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms111# وطرسا كاتبا خيل رامحا % % PageV01P354 51(@)(@@) % أقول لأيامي وهن عواثر % % بحظي لعا قد أدرك الذنب صافحا % % 52(@)(@@) % إذا الصاحب استبقيته لي ورهطه % فمرى بقوم طائرات طوائحا % % 53(@)(@@) % أذموا على الآمال لي وتعاقدوا % % على وقع خلاتي أكفا نواصحا % % 54(@)(@@) % غبرت زمانا أمنع الناس مقودي % % حرونا إلى غير المطامع طامحا % % 55(@)(@@) % أعز فلا ألقى ابن مال مؤملا % % لمال ولا يلقاني الدهر مادحا % % 56(@)(@@) % مع الناس جرا خاطري غير أنهم % % بأخلاقهم يستعبدون القرائحا % % 57(@)(@@) % و ما كنت في طرد الخطوب بيمنهم % % بأول داج يستضيء المصابحا % % 58(@)(@@) % بك اعتدلت حوشية من تصعبي % % و راخيت من أنسي فأصبح سازحا % % 59(@)(@@) % صحبتك لم يمسح عذاري سواده % % و ها أنا قد غطى سوادي المسائحا % % 60(@)(@@) % و سديت عندي نعمة ليس ناهضا % % ثنائي بها ما لم أجدك مسامحا % % PageV01P355 61(@)(@@) % فكن سامعا في كل نادي مسرة % سوارد في الدنيا ولسن بوارحا % % 62(@)(@@) % حوامل أعباء الثناء خفائفا % % صعدن الهضاب أو هبطن الأباطحا % % 63(@)(@@) % يرى المفصح المفتون عجبابشعره % لها ناقصا ما سره منه رازحا % % 64(@)(@@) % إذا قمت أتلوها اقشعر كأنني % % تلوت مزاميرا بها ومسابحا % % 65(@)(@@) % تزورك لا زالت تزور بشائرا % % يسوق التهاني وفدها والمفارحا % % 66(@)(@@) % يضم الزمان شمل عزك نظمها % % و يطرح من عادي علاك المطارحا % % PageV01P356 البحر : - 1(@)(@@) % أيا ليل جو من بشيرك بالصبح % و هل من مقيل بعد في ظلل الطلح % 2(@)(@@) % و ماؤكم استشفيت زمزم بعده % % فما بردت لوحي ولا رفدت جرحي % % 3(@)(@@) % سرقت على سؤر البخيلة نهلة % بها لم أكن أدري أتسكر أم تصحي % % 4(@)(@@) % قضت ساعة بالجو أن ليس عائدا % % بها الدهر في يوم بخيل ولا سمح % 5(@)(@@) % فما لك منها غير لفتة ذاكر % إذا قلت بلت أوقدت لوعة البرح % 6(@)(@@) % أيا صاح والماشي بخير موفق % ترنم بليلي إن مررت على السفح % 7(@)(@@) % و قامر بعيني في الخليط مخاطرا % % عست نظرة منها يفوز بها قدحي % % 8(@)(@@) % و سل ظبية الوادي أأنت أم التي % % حكتك على قلبي بلحظتها تنحى % % 9(@)(@@) % رمت فجنت واستصفحت هي عامد % ألا أين جرم العامدين من الصفح % 10(@)(@@) % و ليل لبسناه بقربك ناعم % بطائن ما بين القلائد والوشح % PageV01P357 11(@)(@@) % و يضحى ويمسي ضوء وجهك بيننا % % سراجا البدر يمسي ولا يضحى % % 12(@)(@@) % و لما 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms112# استوى قسم الملاحة فيكما % % تكلمت حتى بان فضلك بالملح % 13(@)(@@) % تذم اطراحي ود قوم ومدحهم % % و ما مسها حمل الهوان ولا طرحي % % 14(@)(@@) % تعاوت على سرح القريض تقصه % ذئاب لها من عجزها نقد السرح % 15(@)(@@) % تجانف عن حلو الكلام وصفوه % % إذا ولعت جهلا وتكرع في الملح % 16(@)(@@) % إذا كان للتقبيل والشم أصبحت % % تماضغه ما بين أنيابها القلح % 17(@)(@@) % ترى كل علج يحسب المجد جفنة % تراوح أو قعبا يخمر للصبح % 18(@)(@@) % إذا رشحت من بهره وانتفاخه % % أياطله ظن الفصاحة في الرشح % 19(@)(@@) % إذا معجزات الشعر عارضن فهمه % % حلبن بكيئا لا تدر على المسح % 20(@)(@@) % لكل غريب نادر في فؤاده % % و أحقاده فعل النكاية في القرح % PageV01P358 21(@)(@@) % إذا الغيظ أو جهل الفضيلة عاقه % % عن المدح في شيء تجمل بالقدح % 22(@)(@@) % و كم دون حر القول من جنح ليلة % إذا أظلمت لم يور فيها سوى قدحي % % 23(@)(@@) % و قافية باتت تحارب ربها % % فنازلتها شيئا فألقت يد الصلح % 24(@)(@@) % وصلت إليها والأنابيب حولها % % تكسر لما كنت عالية الرمح % 25(@)(@@) % إذا شئت أن تبلو أمرأ أين فضله % من النقص فاسمع منه إطراي أو جرحي % % 26(@)(@@) % و كم ملك لو قد سمحت أريته % % بوجه قريضي طلعة النصر والفتح % 27(@)(@@) % إذا ما ترامت عاليات المنى به % % بعيدا تمنى موضع النجم أو مدحي % % 28(@)(@@) % و خل أتى من جانب اللين عاطفا % % فياسره عودي ولان له كشحي % % 29(@)(@@) % وفرت له قسما كفاه وزاده % % فمال به الإسفاف في طلب الربح % 30(@)(@@) % و ساوم غيري المدح يرخص عرضه % فلم يغني بخلي عليه ولا شحي % % PageV01P359 31(@)(@@) % فأصبحت كالبيضاء ضرت فغاظها % % بسوداء والعجزاء غارت من الرسح % 32(@)(@@) % و لكن ماسرجيس من لا ترده % % عن الجد حنات الطباع إلى المزح % 33(@)(@@) % و لا تقتضي ممطولة الحق عنده % % و لا يكسب الإنصاف بالكد والكدح % 34(@)(@@) % إذا نال بيضات الأنوق ميسرا % % له وكرها لم تسبه بيضة الأدحى % % 35(@)(@@) % كريم الوفاء أملس العرض طاهر % إذا دنس الأعراض عولج بالرضح % 36(@)(@@) % تضيق صدور بالخطوب وصدره % إلى فرجات من خلائقه فسح % 37(@)(@@) % يشير بصغرى قولتيه فيكتفي % % بهاو ذباب السيف يقطع بالنفح % 38(@)(@@) % غزير إذا استملى البلاغة فكره % سقى بقليب لا يغور بالنزح % 39(@)(@@) % تدبر من بيت 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms113# الوزارة باحة % له السبق فيها والجذاع من القرح % 40(@)(@@) % إذا زلقت يوما بأقدام معشر % فمالت مشي فيها قويما على الصرح % PageV01P360 41(@)(@@) % أخذتم بأحقاد قديم وقودها % % عليكم ونار الضغن تحرق باللفح % 42(@)(@@) % و غاظت علاكم حاسديكم فنفرت % فتوق كبود لا تعالج بالنصح % 43(@)(@@) % وجوه اليكم ضاحكات وتحتها % % دخائل نيات معبسة كلح % 44(@)(@@) % وددتك لم أذخر هواك نصيحة % أروح بها ملء الفؤاد كما أضحى % % 45(@)(@@) % حببتك من سلمى وأغدو بشفرة % على عنق من أبغضت من منطقي أنحى % % 46(@)(@@) % و كم من فتاة قد منحتك رقها % % على العز لم أمنن عليك بها منحى % % 47(@)(@@) % لها بين يوم المهرجان مواقف % لديك وبين الصوم عندك والفصح % 48(@)(@@) % أدلت بحسن فهي تبرز سافرا % % إذا اختمرت أخرى حياء من القبح % 49(@)(@@) % إذا المنشد الراوي بها قام خلته % يناوب ترجيع الحمامة بالسجح % 50(@)(@@) % و إن أبطأت عاما عليك سماؤها % % فعندك سلف من مرازمها الدلح % PageV01P361 51(@)(@@) % و لا ذنب لي إن أعقمتني عوائق % من الدهر يوما أن يقصر بي لقحي % % PageV01P362 البحر : - 1(@)(@@) % من عذيري يوم شرقي الحمى % % من هوى جد بقلب مزحا % % 2(@)(@@) % نظرة عادت فعادت حسرة % قتل الرامي بها من جرحا % % 3(@)(@@) % قلن يستطردن بي عين النقا % % رجل جن وقد كان صحا % % 4(@)(@@) % لا تعد إن عدت حيا بعدها % % طارحا عينيك فينا مطرحا % % 5(@)(@@) % قد تذوقت الهوى من قبلها % % و أرى معذبه قد أملحا % % 6(@)(@@) % سل طريق العيس من وادي الغضا % % كيف أغسقت لنا رأد الضحى % % 7(@)(@@) % ألشيء غير ما جيراننا % % نفضوا نجدا وحلوا الأبطحا % % 8(@)(@@) % يا نسيم الصبح من كاظمة % شد ما هجت الجوى والبرحا % % 9(@)(@@) % الصبا إن كان لا بد الصبا % % إنها كانت لقلبي أروحا % % 10(@)(@@) % يا نداماي بسلع هل أرى % % ذلك المغبق والمصطحبا % % PageV01P363 11(@)(@@) % اذكرونا ذكرنا عهدكم % رب ذكرى قربت من نزحا % % 12(@)(@@) % و اذكروا صبا إذا غنى بكم % % شرب الدمع وعاف القدحا % % 13(@)(@@) % رجع العاذل عني آيسا % % من فؤادي فيكم أن يفلحا % % 14(@)(@@) % لو درى لا حملت ناجية % رحله فيمن لحاني ما لحا % % 15(@)(@@) % قد شربت الصبر عنكم مكرها % % و تبعت السقم فيكم مسمحا % % 16(@)(@@) % و عرفت الهم من بعدكم % فكأني ما عرفت الفرحا % % 17(@)(@@) % ما لساري اللهو في ليل الصبا % % ضل في 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms114# فجر برأسي وضحا % % 18(@)(@@) % ما سمعنا بالسرى من قبله % % بابن ليل ساءه أن يصبحا % % 19(@)(@@) % طارق زار وما أنذرنا % % مرغيا بكرا ولا مستنبحا % % 20(@)(@@) % صوحت ريحانة العيش به % % فمن الراعي نباتا صوحا % % PageV01P364 21(@)(@@) % أنكرت تبديل أحوالي ومن % % صحب الدنيا على ما اقترحا % % 22(@)(@@) % شد ما مني غرورا نفسه % % تاجر الآداب في أن يربحا % % 23(@)(@@) % أبدا تبصر حظا ناقصا % % حيثما تبصر فضلا رجحا % % 24(@)(@@) % و المنى والظن باب أبدا % % تغلق الأيدي إذا ما فتحا % % 25(@)(@@) % قد خبرت الناس خبري شيمي % % بخلاء وتسموا سمحا % % 26(@)(@@) % و تولجت على أخلاقهم % % داخلا بين عصاها واللحا % % 27(@)(@@) % و بعثت الماء من صم الصفا % % قبل أن أبعث ظنا منجحا % % 28(@)(@@) % يشتهون المال أن يبقي لهم % % فلماذا يشتهون المدحا % % 29(@)(@@) % يفصح اللحان بالجود وهم % فرط بخل يعجمون الفصحا % % 30(@)(@@) % جرت الحسنى غلاما ماجدا % % لم يطع في الجود إلا النصحا % % PageV01P365 31(@)(@@) % طولوا في حلبة المجد له % % فمضى يتبع رأسا جمحا % % 32(@)(@@) % منجبا من آل إسماعيل لم % % يرو في الأخلاق إلا الملحا % % 33(@)(@@) % كيفما طارت عيافات الندى % % حوله طرن يمينا سنحا % % 34(@)(@@) % لا يبالي أي زند أصلدت % من أتى راحته مقتدحا % % 35(@)(@@) % كلما ضاقت يد الغيث بما % % ملكت جاودها منفسحا % % 36(@)(@@) % لربيب النعمة اجتاب الدجى % % خابط ينفضي قلاصا طلحا % % 37(@)(@@) % حمل الهم وقد أثقله % % جلدة العظم أمونا سرحا % % 38(@)(@@) % توسع البيداء ظهرا خاشعا % % في يد السير ورأسا مرحا % % 39(@)(@@) % لا تبالي ما قضت حاجتها % % ما دمي من خفها أو قرحا % % 40(@)(@@) % حملت أوعية الشكر له % % و انثنت تحمل منه المنحا % % PageV01P366 41(@)(@@) % أحرز الفضل طريفا تالدا % % و المعالي خاتما مفتتحا % % 42(@)(@@) % و جرى يقص من آياته % % أثر المجد طريقا وضحا % % 43(@)(@@) % نسب كيف ترامت نحوه % % أعين الفخر أصابت مسرحا % % 44(@)(@@) % أملس الصفحة لم تعلق به % % غمزة من قادح ما قدحا % % 45(@)(@@) % عود البدر وقد قابله % % غرة بات بها مستصبحا % % 46(@)(@@) % و رآه البحر أوفى جمة % منه بالنائل لما طفحا % % 47(@)(@@) % و تسامت أعين الشعر إلى % % أن يكون السامع الممتدحا % % 48(@)(@@) % لم تجد أبكاره أو عونه % عنك في خطابها منتدحا % % 49(@)(@@) % غير حرات أراها مهملا % % حقها عندكم مطرحا % % 50(@)(@@) % كم ترى أن يصبر الشعر على % % أن تهينوا مثلها أو يصفحا % % PageV01P367 51(@)(@@) % أنتم استنزلتم عنها يدي 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms115# % % يعد ما عز بها أن أسمحا % % 52(@)(@@) % و رغبتم في علا أنسابها % % و كرام من ذويها صلحا % % 53(@)(@@) % و أرى مطلكم في مهرها % % دام والمهر على من نكحا % % 54(@)(@@) % وثق الشعر بكم واتصلت % غفلة تخجله فافتضحا % % 55(@)(@@) % فاعذروه إن أتى مقتضيا % % فلقد أنظركم ما صلحا % % 56(@)(@@) % و مضى حول على حول ولم % % ينتج الوعد الذي قد ألقحا % % 57(@)(@@) % اذكروه مثل ما يذكركم % % محسنا واستقبحوا ما استقبحا % % 58(@)(@@) % و اعلموا أن قليب الشكر إن % % هو لم يمدد برفد نزحا % % 59(@)(@@) % و اصبحوا أيامكم واستخدموا % % في المعالي هجنها والصرحا % % 60(@)(@@) % بين نيروز وعيد أمسيا % % رائدي إقبالكم أو اصحبا % % PageV01P368 61(@)(@@) % تكمه الأحداث عنكم إن أرى % % طرفها غيركم أو المحا % % PageV01P369 البحر : - 1(@)(@@) % من الغادي تحط به وتعلو % % نجائب من أزمتها الرياح % 2(@)(@@) % جوافل تحسب الظلمان منها % % أضاء لوجه قانصها الصباح % 3(@)(@@) % فمرت كل شائلة زفوف % لها من غيرها اليد والجناح % 4(@)(@@) % ململمة لها ظهر مصون % و بطن تحت راكبها متاح % 5(@)(@@) % ترى سوط الشمال يشل منها % % طرائد لا يكف لها جماح % 6(@)(@@) % تراوح رجل سائقها يديه % % و لا التعريس منه ولا البراح % 7(@)(@@) % تعب الماء بين قذ وصاف % إذا ما عافت الإبل القماح % 8(@)(@@) % لعلك ترتمي بك أو سيقضي % % إلى المجد الغدو أو الرواح % 9(@)(@@) % فصل وخلوت من ولهي ووجدي % % و قل ولك السلامة والفلاح % 10(@)(@@) % لمقتدحين في كبدي وساروا % % لواعج ما لقاطنها براح % % PageV01P370 11(@)(@@) % أظنا أنكم بنتم وأبقي % % لبعض الظن إثم أو جناح % 12(@)(@@) % و يحسب بدر عجل أن ليلي % % له من بعد غيبته صباح . % 13(@)(@@) % و أني بعده بمنى ولحظ % ينازعني إلى جذل طماح . % 14(@)(@@) % إذن ففركت بعل المجد منه % % و بنت من العلاء ولا نكاح % 15(@)(@@) % بمن ولمن أريد القلب عنكم % % ليذهل وهو عندكم يراح % 16(@)(@@) % و من بدل وهل عوض وظهري % % بكم يعرى وعزي يستباح % 17(@)(@@) % حملت فراقكم أو قيل جلد % و خلف حشاي أسمة طلاح % 18(@)(@@) % و كيف تغيض لي نزوات دمعي % % و تحت الدمع أجفان قراح . % 19(@)(@@) % فهل فيكم على العدواء آس % فإن البين في كبدي جراح % 20(@)(@@) % ألا عطفا على عيش فساد % يكون له بقربكم صلاح % PageV01P371 21(@)(@@) % و حر قيدته لكم طليقا % % من الناس المكارم والسماح % 22(@)(@@) % و قادته 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms116# لكم خلا صريحا % % حبائل مدها المجد الصراح % 23(@)(@@) % و أخلاق سقته فأسكرته % و بعض خلائقي الكرماء راح % 24(@)(@@) % نكصت وقد أحال على قرن % له سيفان شوق وارتياح % 25(@)(@@) % كأن دمي الحرام على يديه % % بعيد البين ما لكم المباح % 26(@)(@@) % فمن يك في النوى بطلا فإني % أنا المقتول والبين السلاح % 27(@)(@@) % فجعت بقربكم والعهد طفل % و ساعة وصلنا بكر رداح % 28(@)(@@) % و ما شبعت برؤيتكم لحاظ % سواغب لي ولا برد التياح % 29(@)(@@) % و حتى بعد أملس لم تعلق % له بذيول طيب الوصل راح % 30(@)(@@) % فراق سابق اللقيا وعطف % من الأيام زاحمه اطراح % PageV01P372 31(@)(@@) % و نهزة نهلة لم تحل حتى % % تأجن ماؤها الشيم القراح % 32(@)(@@) % كأن الدهر قامرني عليها % % معالجة فخانتني القداح % 33(@)(@@) % لئن قصرت مساعيها وضاقت % % ففي الأشواق طول وانفساح % 34(@)(@@) % فإن كسرت عصا جلدي عصاها % % فآمالي برجعتها صحاح % 35(@)(@@) % و قد يلد السرور على عقام % و يحيا بعد ما مات المراح % 36(@)(@@) % لعلك يا بن أكرمهم يمينا % % و أقدمهم إذا كره الكفاح % 37(@)(@@) % و أوسعهم قرى وأعم قدرا % % إذا ما الكلب أعجزه النباح % 38(@)(@@) % بقربك أن ستخبر أو سيقضي % % لهذا الخرق رقع وانتصاح % 39(@)(@@) % فترجع لي ليال صالحات % بكم فاتت وأيام ملاح % 40(@)(@@) % و ينبت تحت ظلكم لحالي % % جناح حصه القدر المتاح % PageV01P373 41(@)(@@) % علقتكم هوى ومنى فما لي % % على الأيام غيركم اقتراح % 42(@)(@@) % و بعت بكم بني دهري ودهري % % فعدت وملء حضني الرياح % 43(@)(@@) % أقول وقد تعرم جرح حالي % % و سد على مطالعي السراح % 44(@)(@@) % و كاشفني وكان مجاملا لي % % عبوس الوجه من زمني وقاح % 45(@)(@@) % و قد منعت غضارتها وجفت % على أخلاقها الأيدي الشحاح % 46(@)(@@) % غدا يا نفس فانتظري أناسا % % هم فرج لصدرك وانشراح % 47(@)(@@) % ستطلع من بني عيسى عليك ال % % أكف البيض والغرر الصباح % 48(@)(@@) % ثقي بغنى ثراك غدا براح % يطل بها جدوبك أو يراح % 49(@)(@@) % و لا تتسغبي أسفا ويأسا % % فعند مغالق الأمر انفتاح % 50(@)(@@) % سينهض سقطتي منهم غلام % عزائمه الأزمة والصفاح % PageV01P374 51(@)(@@) % كريم جاره حرم منيع % على الأيام أو حي لقاح % 52(@)(@@) % كأن الفضل في ناديه صونا % فتاة الحي تمنعها الرماح % 53(@)(@@) % هو ابتدأ الندى لم أحتسبه % % و أوري لي ولم يكن اقتداح % 54(@)(@@) % و درت راحتاه ولم 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms117# تعصب % و كم من مزنة لا تستماح % 55(@)(@@) % و ظني أن سيشفعها بأخرى % % يسابق سعيه فيها النجاح % 56(@)(@@) % تقوم بها على ميد قناتي % % و تلحم من خصاصتي الجراح % 57(@)(@@) % و تنتج من كرائم رأيه لي % % بجانب جاهه فيها لقاح % 58(@)(@@) % و عندي في الجزاء مسومات % لها بالشكر مغدى أو مراح % 59(@)(@@) % حلى الأعراض تضحك في تريب % لها عقد وفي صدر وشاح % 60(@)(@@) % لها الغرضان من معنى دقيق % تقوم بنصره كلم فصاح % PageV01P375 61(@)(@@) % أبوها فارس وكأن قومي % % بها عدنان أو داري البطاح % 62(@)(@@) % و أفضل ما جزيت أخا بود % و إحسان ثناء وامتداح % PageV01P376 البحر : - 1(@)(@@) % قل للزمان صلحا % % قد عاد ليلي صبحا % % 2(@)(@@) % جاد فزار قمر % كان لوى وشحا % % 3(@)(@@) % يلبس جنحا من دجى ال % % ليل وينضو جنحا % % 4(@)(@@) % فرد ريحا ناششقا % % كاظمة والسفحا % % 5(@)(@@) % كان فأر تاجر % أنحى عليها ذبحا % % 6(@)(@@) % يبعث منها برده % % مع النسيم نفحا % % 7(@)(@@) % غلس شوقا وأصا % % ب فرصة فأضحى % % 8(@)(@@) % طال به الليل نعي % % ما والنهار سبحا % % 9(@)(@@) % يا لسقام آمل % برا به وصحا % % 10(@)(@@) % و رشفة كانت على % % نار حشاي نضحا % % PageV01P377 11(@)(@@) % رش الغليل بردها % % و بل ذاك البرحا % % 12(@)(@@) % كانت سبار كبدي % % و كان شوقي جرحا % % 13(@)(@@) % سل ظبية الوادي تل % % س بانه والطلحا % % 14(@)(@@) % لها بنعمان طلا % تلوي عليه الكشحا % % 15(@)(@@) % أأنت أم ظمياء زر % % ت لاغبين طلحا % % 16(@)(@@) % توسدوا مناسما % % و ركبات قرحا % % 17(@)(@@) % أم جئتنا بسحرها % % تلفتا ولمحا % % 18(@)(@@) % قاربتها ملاحة % % و فضحتك ملحا % % 19(@)(@@) % يا ابنة أم البدر يا % % أخت نجوم البطحا % % 20(@)(@@) % إساءة ومللا % % أزد أسى وصفحا % % PageV01P378 21(@)(@@) % لحا عليك حاسد % و حيث رد لحا % % 22(@)(@@) % حبك خرق لا أرى % % له الملام نصحا % % 23(@)(@@) % فالعذل غش لي ولو % % مات العذول نصحا % % 24(@)(@@) % أنكرت ابتسام أي % % امي وكن كلحا % % 25(@)(@@) % و أبصرت جدى غدا % % فكاهة ومزحا % % 26(@)(@@) % و ما أحست أن رب % % مع الهم قد أمحا % % 27(@)(@@) % و أعذب الشرب الذي % % كان الأجاج الملحا % % 28(@)(@@) % أضحت خطا البين ال % % ي باللقاء تمحى % % 29(@)(@@) % و عاد بالمهذب ال % % دهر البخيل سمحا % % 30(@)(@@) % أهلا وقد مات الحيا % % حتى أمات السرحا % % PageV01P379 31(@)(@@) % و كشرت دردا سنو % % ن أربع وقلحا % % 32(@)(@@) % و عاد ضرع الناب من % % تحت العصاب قرحا % % 33(@)(@@) % بغرة تزيد في % % ليل 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms118# الجدوب قدحا % % 34(@)(@@) % و بيد يعدى ندا % % ها اللحزين الرسخا % % 35(@)(@@) % إن قطرت فوابلا % % أو هطلت فسحا % % 36(@)(@@) % ميمونة ما مسحت % بساط أرض مسحا % % 37(@)(@@) % إلا كست غدائرا % % هام رباها الجلحا % % 38(@)(@@) % لا تعجبوا إن أصفرت % و مول الأشحا % % 39(@)(@@) % هل يسمن العود يش % % ظى أبدا ويلحى % % 40(@)(@@) % لو أنها بحر لأف % % نتها الحقوق نزحا % % PageV01P380 41(@)(@@) % و مرحبا بهن أخ % % لاقا رطابا سمحا % % 42(@)(@@) % إذا السجايا فترت % عدن نشاوي مرحا % % 43(@)(@@) % أبلج زكاه الندى % % فما يخاف جرحا % % 44(@)(@@) % جهدت يا عائبه % فهل وجدت قدحا % % 45(@)(@@) % تنح عن مكانه % % من العلا . تنحا % % 46(@)(@@) % يا بن علي فتم ال % % أشواط جدعا قرحا % % 47(@)(@@) % علوتم الناس ترا % % با والنجوم سطحا % % 48(@)(@@) % لم تدعوا ربابة % للمجد تحوي قدحا % % 49(@)(@@) % إلا لكم فورتها % % منحا بها وسنحا % % 50(@)(@@) % طينة بيت أرضه % % فوق السماء تدحى % % PageV01P381 51(@)(@@) % و دوحة أفرط في % % ها من أطال السرحا % % 52(@)(@@) % بثمركم حاملة % و لم تهجن لقحا % % 53(@)(@@) % جملة مجد كنتم % تفصيلها والشرحا % % 54(@)(@@) % كل غلام كافر % تحت اللثام الصحبا % % 55(@)(@@) % يفرع من شطاطه % قبل الركوب الرمحا % % 56(@)(@@) % يرمي بعينيه طمو % % حا في العلا وطرحا % % 57(@)(@@) % كما تفعى أرقم % بالرمل يذكي اللمحا % % 58(@)(@@) % إذا أحس نبأة % كش لها وفحا % % 59(@)(@@) % علقتم تحت شنو % % ف الدهر بلجا قرحا % % 60(@)(@@) % و بعت من بعت بكم % % فعب بحري ربحا % % PageV01P382 61(@)(@@) % زوجت آمالي بكم % % فولدت لي النجحا % % 62(@)(@@) % لولا هنات كالشرا % % ر يلتمعن لفحا % % 63(@)(@@) % و غفلة تحرق في % % وجه الجمال القبحا % % 64(@)(@@) % و حاجة تحفزني % % يضرب عنها صفحا % % 65(@)(@@) % و كم غضبت ثم عد % % ت أستميح الصلحا % % 66(@)(@@) % و شفعت نفسي لكم % % فحال عتبي مدحا % % 67(@)(@@) % يا بدر هذي الشمس مه % % داة إليك نكحا % % 68(@)(@@) % ففز بها وقل لها % % نصرا بكم وفتحا % % 69(@)(@@) % ملكت بلقيس بها % % و ما نقلت الصرحا % % 70(@)(@@) % أقررتها عينا وأع % % ين الأعادي قرحي % % PageV01P383 71(@)(@@) % و اجتل نجما مشرقا % % منها وصبحا صبحا % % 72(@)(@@) % و اذخر ثنائي لبني % % ك كيمياء صحا % % 73(@)(@@) % أنظم منه لهم % قلائدا ووشحا % % 74(@)(@@) % يخطر فيها الحض % % ري بدويا قحا % % 75(@)(@@) % يتلون منه ما تلو % % ن خطباء فصحا % % 76(@)(@@) % ما ألرقض الأيك الحما % % م طربا وسجحا % % 77(@)(@@) % و ما جرى الصوم وجا % % ء الفطر يحدو الأضحى % % PageV01P384 البحر : - 1(@)(@@) % سل في الغضا وصبا الأصائل تنفح % هل 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms119# ريح طيبة في الذي يستروح % 2(@)(@@) % و هل النوى وقضاؤها متمرد % تركت برامة بانة تترنح % 3(@)(@@) % أم شق ليل الغور عن أقماره % بعدي يد تمطو وطرف يطمح % 4(@)(@@) % أهل القباب و من بهم لمصفد % بالبعد أتلع بالعراق وأبطحزا % % 5(@)(@@) % جعلوا اللوى وعد اللقاء فقربوا % % و رمت تهامة دونهم فتنزحو % % 6(@)(@@) % و وراءهم عين الغوير وهامة % رعناء من أجإ ورحب صحصح % 7(@)(@@) % و سيال طي في رؤوس صعادها % % و الخيل تزبن في الحديد وترمح % 8(@)(@@) % فمن المطالب والغريم ببابل % و الدين يحجبه الأراك و توضح % % 9(@)(@@) % يا موردي ماء النخيل هناكم % أن تعذبوا وشروب دجلة تملح % 10(@)(@@) % هل في القضية عندكم من نهلة % تروي بها هذي القلوب اللوح % PageV01P385 11(@)(@@) % ترد الغرائب آنسات بينكم % % و أسيركم يجد الفرات فيقمح % 12(@)(@@) % لا سكرة البلوى ببابل بعدكم % % تصحو ولا ليل البلابل يصبح % 13(@)(@@) % كم سهم رام عندكم أهدفته % % قلبي ولكن تقتلون ويجرح % 14(@)(@@) % و تملحت لي ظبية غورية % سنحت وظبيتكم بنجد أملح % 15(@)(@@) % إما عدت عنكم بسيطة عامر % فطراة شيبة بالمناسم يرضح % 16(@)(@@) % و الحرتان وزند ناجر فيهما % % إما يشب لظى وإما يقدح % 17(@)(@@) % فلكم على الزوراء من متعلق % بشكيمتي شعفا ورأسي يجمع % 18(@)(@@) % و كريمة الأبوين أطرق بيتها % % و الليل بابن سمائه متوضح % 19(@)(@@) % و على من ثوبي هواي وعفتي % % شوق يبل وخلوة لا تقبح % 20(@)(@@) % و محجب الأبواب في ربعانه % % أضحت مغالقه لشعري تفتح % PageV01P386 21(@)(@@) % تتراحم الآمال حول بساطه % % عظما ولي منه المكان الأفيح % % 22(@)(@@) % رفض الكلام الوغد يعلم أنه % % يهجي سوى فقري بما هو يمدح % 23(@)(@@) % و مشى يجر قلائدي متخايلا % % فيها يقلد درها ويوشح % 24(@)(@@) % و على السدير و حيرة النعمان لي % % من خاطب لو أن ودي ينكح % 25(@)(@@) % و فتى ذؤابة هاشم آباؤه % % دينا وبيناه منى و الأبطح % 26(@)(@@) % رضع النبوة وارتبي في حجرها % % جذعا على طول الإمامة يقرح % 27(@)(@@) % و رمى بطرفيه السماء فلم يفت % % طرفيه من ذلك المجرة مطرح % 28(@)(@@) % عمرو العلا أدته عن عمرو العلا % % أم متممة وفحل ملقح % 29(@)(@@) % شرف إلى الزهراء مسرى عرقه % و على الوصي فروعه تترشح % 30(@)(@@) % تتهابط الأملاك بين بيوته % % و تطير وهي بهديه تستنجح % PageV01P387 31(@)(@@) % يا راكب الوجناء ينقل رحله 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms120# % عنق لها ذلل وذيل ملوح % 32(@)(@@) % تمضي عزوفا لا تغر ببوها % % يلقى السقائط بالفلاة ويطرح % 33(@)(@@) % و اذا أراها الخمس ماء عشية % % عدته قانعة لآخر يصبح % 34(@)(@@) % بلغ كأنك مفصحا غيلان وان % % تفض الطريق كأن عنسك صيدح % 35(@)(@@) % الكوفة البيضاء أن بجوها % % قمرا تغاظ به البدور وتفضح % 36(@)(@@) % عرج وقل لأبي علي مالئا % % أذنيه حيتك الغوادي الروح % 37(@)(@@) % و سقتك كفك فهي أغزر ديمة % ما فلصت عنك السحاب الدلح % 38(@)(@@) % و ازداد مجدك بسطةز إنارة % و علو جدك والجدود تطوح % 39(@)(@@) % فت الصفات فلجلج المثني بما % % تولي وأعجم في علاك المفصح % 40(@)(@@) % فالبدر تم وأنت أكمل صورة % و البحر عم وأنت منه أسمح % PageV01P388 41(@)(@@) % و الخادر الحامي حمى أشباله % لك عن وليجة غابه يتزحزح % 42(@)(@@) % تركت سيادتها العشيرة رغبة % لك في اقتبالك وهي بزل قرح % 43(@)(@@) % و رأت زئيرك دونها فتأخرت % % و ثعالب الأعداء فيها تضبج % 44(@)(@@) % جمعت ألفة عزها وعزيبها % % بقنا العدا طردا يشل ويسرح % 45(@)(@@) % و شفت سيوفك من بني أعمامها % % داء تضيق به الصدور وتبرح % 46(@)(@@) % دين شكوت إلى الحسام مطاله % فقضاه والسيف المشاور أنصح % 47(@)(@@) % دمن على القربي تزيد عداوة % فخروقها ما بينكم لا تنصح % 48(@)(@@) % حسدوا تقدم فضلكم فحقودهم % % لا تنطفي وفسادهم لا يصلح % 49(@)(@@) % زحموك أمس فعاركوا ملمومة % صماء يوقص ركنها من ينطح % 50(@)(@@) % فسقيتهم كأسا مجاجتها الردى % % شربوا على كره لها ما يجدح % PageV01P389 51(@)(@@) % يا جامع الحسنات وهي بدائد % و مرب روض الفضل وهو مصوح % 52(@)(@@) % كف تخف مع الرياح سماحة % و مهابة تزن الجبال وترجح % 53(@)(@@) % قد جاءت الغرر الغرائب طلعا % % كالشهب تثقب في الدجى وتلوح % 54(@)(@@) % ثمر بغرسك قد حلت مجناته % و نتائج من بحر فكرك تلقح % 55(@)(@@) % فنطقن والأشعار خرس عندنا % % و نجون سبقا والقوافي طلح % 56(@)(@@) % فكأن روض الحزن تنشره الصبا % % ما ظلت من قرطاسها أتصفح % 57(@)(@@) % فسوادها من ناظري ما يمحي % % و سدادها من خاطري ما يبرح % 58(@)(@@) % ألفتها من جوهر في النفس لا % % يفنى ومعدن فكرة لا ينزح % 59(@)(@@) % نظمت لي الحسن المبرز والهدى % % فكأنني بنشيدهن أسبح % 60(@)(@@) % و أما وذرعك في العلاء فإنه % % قسم لباع الصدق فيه مسرح % PageV01P390 61(@)(@@) % ما خلت صدق القول شخصا ماثلا % % يهدى 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms121# وأن الرفد سحر يمنح % 62(@)(@@) % جاريتها متحذرا من سبقها % % و البرق يكبو عن مداي ويكبح % 63(@)(@@) % و متى أقوم مكافئا بجزائها % % و نداك مفترع بها مستفتح % 64(@)(@@) % كرم تطلع من شريف خلائق % أصفى من المزن العذاب واسجح % 65(@)(@@) % لم أرمه بسهام تقدير ولم % % أطرح له الآمال فيما أطرح % 66(@)(@@) % فلترضينك إن قبلت معوضة % مما أصون بحائل تتنفح % 67(@)(@@) % سيارة في الخافقين فذكرها % % ذكر الغمائم باكر متروح % 68(@)(@@) % تجزي الرجال بصدقهم فصديقها % % في غبطة وعدوها لا يفرح % 69(@)(@@) % مجنوبة لك لا تزال جباهها % % أبدا على السبق المبرح تمسح % 70(@)(@@) % فامدد لها رسن الرجاء فإنها % % بالود تشكم والكرامة تشبح % PageV01P391 71(@)(@@) % مهما تعرض للرجال بدينها % % فمديحها لك بالغلو يصرح % PageV01P392 البحر : - 1(@)(@@) % أتكتم يوم بانة أم تبوح % و أجدر لو تبوح فتستريح . % 2(@)(@@) % حملت البين جلدا والمطايا % % بوازلها بما حملت طلوح % 3(@)(@@) % و قمت وموقف التوديع قلب % يطير به الجوى وحشا تطيح % 4(@)(@@) % تلاوذ حيث لا كبد تلظى % % بمعتبة ولا جفن قريح % 5(@)(@@) % فهل لك غير هذا القلب تحيا % % به أو غير هذي الروح روح % 6(@)(@@) % لعمر أبي النوى لو كان موتا % % جنت لك فهو موت لا يريح % 7(@)(@@) % يفارق عاشق ويموت حي % و خيرهما الذي ضمن الضريح % 8(@)(@@) % و قال العاذلون البعد مسل % فما لجواك ضاعفه النزوح . % 9(@)(@@) % و في الأظعان طالعة أشيا % أبو لونين مناع منوح % 10(@)(@@) % سلافة ريقه بسل حرام % و وردة خده مما يبيح % PageV01P393 11(@)(@@) % إذا كتمته خالفة وخدر % وشى بمكانه المسك النضيح % 12(@)(@@) % أسارقه مسارقة ودون ال % % خلاط به الأسنة والصفيح % 13(@)(@@) % و لم أر صادق العينين قبلي % % أضل فدله شم وريح % 14(@)(@@) % أيا عجبا يهتك في سلاحي % % و قد حطم القنا طرف طموح % 15(@)(@@) % و يقنصني على إضم وقدما % % قنصت أسودها رشأ سنيح % 16(@)(@@) % رمى كبدي وراح وفي يديه % % نضوح دمي فقيل هو الجريح % 17(@)(@@) % و أرسل لي مع العواد طيفا % % يرى كرما وصاحبه شحيح % 18(@)(@@) % إذا كرب الرمي يبل شيئا % % ألم فدميت تلك القروح % 19(@)(@@) % فقال كم القنوط وأنت تحيا % % و كم تأتي الغني وتستميح % 20(@)(@@) % شكوت و من أرى رجل صحيح . % فقلت له وهل يشكو الصحيح % PageV01P394 21(@)(@@) % فما لك يا خيال خلاك ذم % أتاحك لي على النأي 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms122# المتيح . % 22(@)(@@) % فكيف وبيننا خيطا زرود % قربت عليك والبلد الفسيح . % 23(@)(@@) % أعزم من زعيم الملك تسري % % به أم من ندى يده تميح % 24(@)(@@) % حملت إذا على ملك كريم % % إلى رحلي يعود بك المسيح % 25(@)(@@) % و جئت بنائل لا البحر منه % % بمنتصف ولا الغيث السفوح % 26(@)(@@) % حمى الله ابن منجبة حماني % % و قد شلت على الراعي السروح % % 27(@)(@@) % و سد بجوده خلات حالي % % و قد ضعفت على الخرق النصوح % 28(@)(@@) % تكفل من بني الدنيا بحاجي % % نتوج في عقائمها لقوح % 29(@)(@@) % تفرغ لي وقد شغل المواسي % % و خالصني وقد غش الصريح % 30(@)(@@) % و قام بنصر سؤدده فسارت % مطالعه وأنجمهم جنوح % PageV01P395 31(@)(@@) % حلت مدحي لقوم لم يهشوا % % و غناه فأطربه المديح % 32(@)(@@) % كأن الشعر لم يفصح لحي % سواه وكلهم لحن فصيح % 33(@)(@@) % جواد في تقلب حالتيه % % فلا سعة تبين ولا رزوح % 34(@)(@@) % إذا قامت له في الجود سوق % فكل متاجر فيها ربيح % 35(@)(@@) % تمرن في السيادة منه ماض % على غلوائه لا يستريح % 36(@)(@@) % جرى متدفقا في حلبتيها % % كما يتدفق الطرف السبوح % 37(@)(@@) % و جمع ملك آل بويه منه % % على ما شتت الكافي النصيح % 38(@)(@@) % يقلب منه أنبوبا ضعيفا % % تدين له الصفائح والسريح % 39(@)(@@) % و كان الفارس القلمي يبلى % % بحيث يعرد البطل المشيح % 40(@)(@@) % ورى بضيائه والليل داج % خفوق النور منبلج وضوح % PageV01P396 41(@)(@@) % أضل الناس في طرق المعالي % % سبيلا بين عينيه يلوح % 42(@)(@@) % و ضم الحبل محلولي مريرا % أخو طعمين منتقم صفوح % 43(@)(@@) % فيوم الأمن وراد شروب % و يوم الغبن عياف قموح % 44(@)(@@) % أبا حسن عدوك من ترامى % % به الرجوان والقدر الجموح % 45(@)(@@) % إلى متمرد المهوى عميق % فتطرحه مهالكه الطروح % 46(@)(@@) % تفرس في الغزالة وهو أعشى % % ليقدح في محاسنها القدوح % 47(@)(@@) % يناطح صخرة بأجم خاو % أيا سرعان ما حطم النطيح % 48(@)(@@) % بحقك ما أبحتك من فؤادي % % مضايق لم ينلها مستميح % 49(@)(@@) % أصارك وهي خافية إليها % % ودادك لي ونائلك السجيح % 50(@)(@@) % فإن أخرست ريب الدهر عني % بعونك والنوائب بي تصيح % PageV01P397 51(@)(@@) % و لم تبعلك بي مترادفات % من الحاجات تغدو أو تروح % 52(@)(@@) % و غيرك حام آمالي عطاشا % % عليه وما يبل لهن لوح % 53(@)(@@) % تزاور جانبا عن وجه فضلي % % فضاع عليه كوكبي الصبيح % 54(@)(@@) % جفاني لا يعد علي ذنبا 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms123# % % بأعذار وليس لها وضوح % 55(@)(@@) % أعاتبه لأنقله ويعيا % % بنقل يلملم اليوم المريح % 56(@)(@@) % و كم أغضيت إبقاء على ما % % أتى وسترت لو خفي القبيح % 57(@)(@@) % فلا تعدمك أنت مكررات % على الآفاق تقطن أو تسيح % 58(@)(@@) % لها أرج بنشرك كل يوم % على الأعراض ضوعته تفوح % 59(@)(@@) % تصاعد في الجبال بلا مراق % و يقذف في البحار بها السبوح % 60(@)(@@) % تمر عليك أيام التهاني % % و منهن المبارك والنجيح % PageV01P398 61(@)(@@) % بجيد المهرجان وكان عطلا % % قلائد من حلاها أو وشوح % 62(@)(@@) % بشائر أن عمرك في المعالي % % يعد مضاعفا ما عد نوح % PageV01P399 البحر : - 1(@)(@@) % لمن صاغيات في الحبل طلائح % تسيل على نعمان منها الأباطح % 2(@)(@@) % تخابط أيديها الطيرق كأنها % % موائر في بحر الفلاة سوابح % 3(@)(@@) % دجا ليلها وهي السهام تقامصا % % فلم ينصرم إلا وهن طرائح % 4(@)(@@) % كأن الوجى سر تخاف انتشاره % % فمنها مرم بالتشاكي وبائح % 5(@)(@@) % حملن شموسا في الحدوج غواربا % % و ليل السرى منهن أبلج واضح % 6(@)(@@) % ينوء بها أن القدود خفائف % و يظلعها أن المتون رواجح % 7(@)(@@) % و فيهن منصور السهام مسلط % لعينيه أن تدوى القلوب الصحائح % 8(@)(@@) % يطير جبارا ما أراقت لحاظه % % إذا وفيت حكم القصاص الجرائح % 9(@)(@@) % رماني ونسك الحج بيني وبينه % % و لم يدر أن الصيد في الحج قادح % 10(@)(@@) % طرحت بجمع نظرة ساء كسبها % % و تبعث شرا للعيون المطارح % PageV01P400 11(@)(@@) % فإن سترت تلك الثلاث على منى % هواي فيوم النفر لا شك فاضح % 12(@)(@@) % بكيت ولام العاذلات فلم تغض % على رقية العذل الدموع السوافح % 13(@)(@@) % و لم أر مثل العين تشفى بدائها % % و لا كالعذول يجتوى وهو ناصح % 14(@)(@@) % أمنك ابنة الأعراب طيف تبرعت % به هبة التغوير والليل جانح % 15(@)(@@) % طوى الرمل حتى ضاق بيني وبينه ال % % عناق وما بيني وبينك فاسح % 16(@)(@@) % فبات على ما ترهبين ركوبه % % هجوما وفيما تمنعين يسامح % 17(@)(@@) % رعى الله قلبا ما أبر بمن جفا % % و أثبت عهدا والعهود طوائح % 18(@)(@@) % و أوسع ذرعا بالوفاء وصونه % إذا ضاق ما تطوى عليه الجوانح % 19(@)(@@) % عذيري من دهري كأني أريده % % على الود سلما وهو قرن مكافح % 20(@)(@@) % و صحبة خوانين بائعهم وإن % % تكثر منهم بالتوحد رابح % PageV01P401 21(@)(@@) % أخوهم أخو الذئب الخبيث يدله % % على الدم ما تملي عليه 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms124# الروائح % 22(@)(@@) % و أيد سباط وهي بالمنع جعدة % تلاطمني منها اللواتي أصافح % 23(@)(@@) % يضيء على أبصارهم ضوء كوكبي % % و موضعه من مطلع الفضل لائح % 24(@)(@@) % قعدت مع الحرمان بين ظهورهم % % و طائر حظي لو تعيفت سانح % 25(@)(@@) % لقد كان لي عن بابل وجدوبها % % مذاهب يتلوها الغنى ومنادح % 26(@)(@@) % تركت عباب البحر والبحر معرض % و أملت ما تسقى الركايا النوازح % 27(@)(@@) % و لو نهضت بي وثبة الجد زاحمت % على الماء هذى الآبيات القوامح % 28(@)(@@) % إذا لسقاها ناصر الدين ما استقت % كبود حرار أو شفاه ملاوح % 29(@)(@@) % و قد كانت الزوراء دار إقامة % و منعمة فيها المنى والمفارح % 30(@)(@@) % زمان العلا محفوظة في عراصها % % ثقال وميزان الفضائل راجح % PageV01P402 31(@)(@@) % فقد حولت تلك المحاسن وانتهت % إلى غيرها في الأرض تلك المنائح % 32(@)(@@) % و أضحت عمان للمكارم رحلة % تراح عليها المتعبات الروازح % 33(@)(@@) % بها الملك طلق والمغاني غنية ال % % ربا ومساعي الطالبين مناجح % 34(@)(@@) % يضوع ثراها بالندى فتخالها % % رياضا وكانت قبل وهي ضرائح % 35(@)(@@) % يدبرها سبط اليدين بنانه % % لمقفل أرزاق العباد مفاتح % 36(@)(@@) % صفا جوها بعد الكدور بعدله % % و طابت حساياها الخباث الموالح % 37(@)(@@) % فما غيرها فوق البسيطة للعلا % % مقر على أن البلاد فسائح % 38(@)(@@) % و لا ملك إلا وفضلة ربها % % عليه إذا عد الملوك الجحاجح % 39(@)(@@) % بهمة محي الأمة اجتمعت لها ال % % بدائد وانقادت إليها الجوامح % 40(@)(@@) % بأروع وسم الملك فوق جبينه % % إذا ارتابت الأبصار أبلج واضح % PageV01P403 41(@)(@@) % إذا نسب الأملاك لم يخش خجلة ال % % دعاوى ولم تدخل عليه القوادح % 42(@)(@@) % من النفر الغر الذين ببأسهم % % و نعمائهم تلقى الخطوب الفوادح % 43(@)(@@) % إذا ما دجت عشواء أمر فأمرهم % % و نهيهم شهب لها ومصابح % 44(@)(@@) % لهم قصبات السبق في كل دولة % % هم السر منها والعتاق الصرائح % 45(@)(@@) % ينالون أقصى ما ابتغوه بأذرع % % مخاصرها صم القنا والصفائح % 46(@)(@@) % أصول علا منصورة بفروعها % % إذا غاب ممس منهم هب صابح % 47(@)(@@) % و رب يمين الدولة المجد بعدهم % % كما ربت الروض الغيوث السوافح % 48(@)(@@) % جرى جريهم ثم استتم بسبقه % % و كم وقفت دون الجذاع القوارح % 49(@)(@@) % همام مع الإصرار مصطلم لمن % % عصى ومع الإقرار بالذنب صافح % 50(@)(@@) % تسنم أعواد السرير محجب % لواحظه شرقا وغربا طوارح % PageV01P404 51(@)(@@) % تراصد جرى 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms125# الأرض رجعات طرفه % % كما ركب المرباة أزرق لامح % 52(@)(@@) % ألا أيها الغادي ليحمل حاجتي % % لعلك إن بلغت بالنجح رائح % 53(@)(@@) % أعد في مقر العز عني تحية % يذكي النسيم طيبها المتفاوح % 54(@)(@@) % و قل عبدك المشتاق لا عهده عفا % % و لا وجده إن نقل الوجد نازح % 55(@)(@@) % و من لم يخيب قط عالي ظنونه % % لديك ولم تخدج مناه اللواقح % % 56(@)(@@) % و أغنيته عمن سواك فلم يبل % جفا مانع أو بر بالرفد مانح % 57(@)(@@) % قليب قريب لي ببغداد ماؤها % % و منبعها شحط النوى متنازح % 58(@)(@@) % لها كل عام من سماحك ناهز % و من عهدك الوافي رشاء وماتح % 59(@)(@@) % إذا ما استدر الشكر سلسال صوبها % % و جاءك عني تمتريها المدائح % 60(@)(@@) % أتتني وبطن البحر ظهر مطيها % % فروت غليلي والسفين النواضح % PageV01P405 61(@)(@@) % و ما زادها التنقيص إلا غزارة % و إلا صفاء طول ما أنا نازح % 62(@)(@@) % تبل ثرى أرضي وجسمي وادع % و تثمر لابني وهو ساع مكادح % 63(@)(@@) % كلانا سقى من عفوها وزلاها % % و إن حبستني عقلتي وهو بارح % 64(@)(@@) % فلله مولى منك ما لي عنده % % و متجر من يدلي بجاهي رابح % 65(@)(@@) % و ها هو قد كرت اليك رجاءه % سوائر حاج طيرهن سوانح % 66(@)(@@) % فأمرك زاد الله أمرك بسطة % بما عودت تلك السجايا السحائح % 67(@)(@@) % أعن جهده واعرف له خوض زاخر % يهز الضلوع موجه المتناطح % 68(@)(@@) % و لم أستزد نعماك إلا ضرورة % و قد تستزاد المزن وهي دوالح % 69(@)(@@) % بما ثقلت ظهري الخطوب وضاعفت % تكاليف عيشي وانتحتني الجوائح % 70(@)(@@) % و ما بث من زغب حوالي كالقطا % % تنزى الشرار أعجلتها المقادح % PageV01P406 71(@)(@@) % أمسح منهم كل عطف أسفت إذ % % أتاني وقد بيضن مني المسائح % 72(@)(@@) % نجوت على عصر الشبيبة منهم % و أرهقني المقدار إذ أنا قارح % 73(@)(@@) % فدتك ملوك ذكر مجدك بينهم % % مثالب في أعراضهم وجرائح % 74(@)(@@) % إذا لعنوا صلت عليك محافل % صفاتك قرآن لها ومسابح % 75(@)(@@) % حموا مالهم أن تنتحى بنقيصة % % عقائله والساريات السرائح % 76(@)(@@) % و مالك في الآفاق شتى موزع % كرائمه والباقيات الصوالح % 77(@)(@@) % سهرت ونام الناس عما رأيته % % كأنك للعلياء وحدك طامح % 78(@)(@@) % و جاريت سيب البحر ثم فضلته % % و هل يستوي البحران عذب ومالح % 79(@)(@@) % أعرني سمعا لم تزل 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms126# مطربا له % % إذا ما تغنته القوافي الفصائح % 80(@)(@@) % و أصغ لها عذراء لولاك لم تجب % % خطيبا ولم يظفر بها الدهر ناكح % PageV01P407 81(@)(@@) % من الباهرات لم تحدث بمثلها ال % % نفوس ولم توصل إليها القرائح % 82(@)(@@) % ظهرت بها وحدي على حين فترة % من الشعر برهاني بها اليوم لائح % 83(@)(@@) % و من شرف الأشعار أنك سامع % و من شرف الإحسان أني مادح % 84(@)(@@) % و من لي لو أني مثلت مشافها % % أفاوضها أسماعكم وأطارح % 85(@)(@@) % و أن ينهض الجد العثور بهجرة % تعالج أشواقي بها والتبارح % 86(@)(@@) % و يا ليتما ريح الشمال تهب لي % % فتطلعني منها عليك البوارح % 87(@)(@@) % و كيف مطاري والخطوب تحصني % % و أخدي شوطي والليالي كوابح % 88(@)(@@) % و قد كان جبن القلب يقعد عنكم % فقد ساعدته بالنكول الجوارح % 89(@)(@@) % و أقسمت الستون ما لخروقها % % إذا اتسعت في جلدة المرء ناصح % 90(@)(@@) % و إني على أنسي بأهلي وموطني % % لأعلم أن العيش عندك صالح % PageV01P408 البحر : - 1(@)(@@) % أرى طرفها أن الخضابين واحد % و لكنه ما بهرج الشيب ناقد % 2(@)(@@) % ضلالة حب غادرتني مزورا % % عذاري وإني لو أفقت لراشد % 3(@)(@@) % يقولون عمر الشيب أطول بالفتى % % و ما سرني أني مع الشيب خالد % 4(@)(@@) % أماض فغدار زمان أباحني % % حريم الهوى أم حافظ لي فعائد % 5(@)(@@) % و دارين من عالي الصراة سقتها ال % % بوارق ربعي الهوى والرواعد % 6(@)(@@) % ألفتهما والعيش أبيض ضاحك % بربعهما والظل أخضر بارد % 7(@)(@@) % و ندمان صبحي صاحب متسمح % معي وضجيع الليل إلف مساعد % 8(@)(@@) % و أخرس مما سنت الفرس ناطق % يهب رياحا روحه وهو راكد % 9(@)(@@) % على صدره بالطول سبع ضعائف % تدبرها بالعرض سبع شدائد % 10(@)(@@) % و خمس سكون تحت خمس حوارك % تمد ثلاثا يمتطيهن واحد % PageV01P409 11(@)(@@) % يشرد من حلم الفتى وهو حازم % فيرجع عنه فاسقا وهو عابد % 12(@)(@@) % و قوراء ماء الكرم أحمر ذائب % عليها وماء التبر أصفر جامد % 13(@)(@@) % تمثل بهرام الكواكب قائما % % بها حيث بهرام الأكاسر قاعد % 14(@)(@@) % أميران يخفي قائم السيف قابض % عليه ويبدي درة التاج عاقد % 15(@)(@@) % تبين وحبات المزاج نوازل % و تخفي وحبات الحباب صواعد % 16(@)(@@) % مصالح عيش والفتى من خلالها % % إذا لاحظ الأعقاب فهي مفاسد % 17(@)(@@) % و دنيا لسان الذم فيها محكم % و لكنها عند 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms127# الحسين محامد % 18(@)(@@) % اليكم بني الحاجات إني رائد % ليحبس جار أو ليبرك واخد % 19(@)(@@) % أب بكم بر وأنتم معقة % أخ لكم دنيا وأنتم أباعد % 20(@)(@@) % حبيب إليه ما غنمتم كأنه % % إذا جاد مرفود بما هو رافد % PageV01P410 21(@)(@@) % أناة ومن تحت القطوب تبسم % أوانا وفي عقب الأناة مكايد % 22(@)(@@) % محاسن لا ينفك ينشر حامد % لها بعض ما بطوي على الغل حاسد % 23(@)(@@) % و لما جلاك الملك في ثوب جسمه % % تراءت على قدر العروس المجاسد % 24(@)(@@) % أثبت بها عذراء ما افتض مثلها % % سوى ربها ما كل عذراء ناهد % 25(@)(@@) % بهائية تعزي لأشرف نسبة % لتيأس منها كل نفس تراود % 26(@)(@@) % لها أرج للعز باق وإنها % % على عز من تهدى إليه لشاهد % 27(@)(@@) % على منكب الفخر استقرت ولم تكن % % تلاقيك لو لم تدر أنك ماجد % 28(@)(@@) % أبان بها ما عنده لك إنما % % تحلى لإكرام السيوف المغامد % 29(@)(@@) % فزاد بهاء الدولة الله بسطة % على أي علق منك أضحى يزايد % 30(@)(@@) % لئن كان سيفا مرهف الحد إنه % % ليعلم علم الحق أنك ساعد % PageV01P411 31(@)(@@) % أتاني ليلا قر عينا مبشري % % فأيقظن وهنا وإني لراقد % 32(@)(@@) % قمت فكف يشكر الدهر كاتب % ثناك وخد يشكر الله ساجد % 33(@)(@@) % و ناديت فانثالت معان كأن ما % % تنظمه منها القوافي فرائد % 34(@)(@@) % و تنقدن لي ما سرن ظهر مدائحي % % إليك وهن عن سواك حوائد % 35(@)(@@) % و ما كن مع طول القيام صواديا % % ليسرحن إلا حيث تصفو الموارد % 36(@)(@@) % و لست كمن يعطي الأسامي نواله % إذا جاد تقليدا وتلغى القصائد % 37(@)(@@) % و ما الشعر إلا ما أقامت بيوته % % و سارت فأضحى قاطنا وهو شارد % 38(@)(@@) % و ما هو إلا في رقاب إذا فشا % % به الحفظ أغلال وأخرى قلائد % PageV01P412 البحر : - 1(@)(@@) % أقامت على قلبي كفيلا من العهد % يذكرني بالقرب في دولة البعد % 2(@)(@@) % فقولا لواشيها وإن كان صادقا % % وفائي لها أحظى ولو غدرت عندي % % 3(@)(@@) % خليلي ما للريح هبت مريضة % هل اجتدت البخال أم حملت وجدي % % 4(@)(@@) % ضمنت من الداءين ما لا تقله % على طرحها الشم الهضاب من الصلد % 5(@)(@@) % حنين ولكن من لشملي بجامع % % و مد يد لكن من الرجل المجدي % % 6(@)(@@) % فلا حب بل لاحظ نالك حظه % % قد اشترك الأحباب 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms128# والحظ في الصد % 7(@)(@@) % و سمى زماني طول صبري تجلدا % % عدمتك ما أبقيت بعدي للجلد % 8(@)(@@) % كما ذم من قبلي ذممتك عالما % % بأنك موقوف على الذم من بعدي % % 9(@)(@@) % و لكن تجاوز لي بصرفك ماجدا % % إليه إذا جارت صروفك أستعدي % % 10(@)(@@) % إذا الصاحب استنجدته فوجدته % فرعني فيمن غيره شئت بالفقد % PageV01P413 11(@)(@@) % و إن مر في الأحباب عيش بغيره % % فحسبي بعلم الله في ذاك والحمد % 12(@)(@@) % و ما أعرف الممدوح لم يجزني به % % إذا قلت خيرا إن ذلك بالضد % 13(@)(@@) % أحقهم عندي بما قمت مثليا % % أعدده من فات إحسانه عدي % % 14(@)(@@) % فإن تكن الأيام أجدبن مرتعي % % لديه وكدرن الزلالة من وردي % % 15(@)(@@) % أقول لآمالي وأخشى قنوطها % % ركوبك ظهر الصبر أدنى إلى الرشد % 16(@)(@@) % تطار فلولا وجه سعدك لم يكن % % سراجك في الظلماء نجم بني سعد % 17(@)(@@) % أبا القاسم امنحني سمعت استماعة % وقف بي من استبطاء حظي على حد % 18(@)(@@) % سخوت بشعري قبل مدحك لاقيا % % بسبط كلامي كل ذي نائل جعد % 19(@)(@@) % إذا قلت أين الجود أنشد بخله % % محا الدهر ربعا بالمشقر من هند % 20(@)(@@) % تعاب لديه الشمس بالنور حجة % على منعه والماء في القيظ من برد % PageV01P414 21(@)(@@) % و فاضت وهم يبس بحارك بينهم % % فيا ليت شعري ما لجودك ما يعدى % % 22(@)(@@) % و قد كان لي في الشعر عندك دولة % و لكن قليل مكثها دولة الورد % 23(@)(@@) % أظل وما في عاشقيك محقق % سواي أقاسي الهجر من بينهم وحدي % % 24(@)(@@) % فلم أنت راض وللمجد وقفة % تزاحم دمع اليأس فيها على خدي % 25(@)(@@) % و ما غير تأميلي بديني قضاؤه % % فكم أتقاضاه وأنحت من جلدي % % 26(@)(@@) % عسى يقف الإنجاز بي عند غاية % تريح فلي حول أجر على الوعد % 27(@)(@@) % تساويف وفاها المطال حدوده % % فعجل لها الإنجاز أو جبهة الرد % PageV01P415 البحر : - 1(@)(@@) % أنا اليوم مما تعهدين بعيد % تريدين مني والعلاء يريد % 2(@)(@@) % طوى رسني عن قبضة الحب خالعا % % قواه وقدما كنت حيث يقود % 3(@)(@@) % هوى وليالي اللهو بيض وهبته % إليها وأيام الكريهة سود % 4(@)(@@) % و هيف رقاق موضع الهيف فتنني % % و هن جسوم حلوة وقدود % 5(@)(@@) % دعيني وخلقا من سني استفديه % % عزيزا فمعدود السنين مفيد % 6(@)(@@) % و لا تحسبيني صبغ لونين في الهوى 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms129# % % أتوب وتبدو فرصة فأعود % 7(@)(@@) % و لا كامنا في الحي أنظر سربه % على خدعة الأشراك كيف أصيد % 8(@)(@@) % و حص غرابي يا ابنة القوم أجدل % بصير بأوكار الشباب صيود % 9(@)(@@) % أراك تريني ناقصا ونقيصتي % % ليال وأيام على تزيد % 10(@)(@@) % لكل جديد باعترافك لذة % فما لك عفت الشيب وهو جديد % PageV01P416 11(@)(@@) % تأخرت بالصمصام وهو مصمم % % و خالفت رأي الرمح وهو سديد % 12(@)(@@) % متى ضنت الدنيا علي فأبصرت % % لساني فيها بالسؤال يجود % 13(@)(@@) % إذا كنت حرا فاجتنب شهواتها % % فإن بنيها للزمان عبيد % 14(@)(@@) % و بن في عيون الناس منهم مباعدا % % إذا اشتبهوا واسلم وأنت وحيد % 15(@)(@@) % و قل بلسان الحظ إن خطيبه % بليغ ومن أعيا عليه بليد % 16(@)(@@) % إذا شئت أن تلقي الأنام معظما % % فلا تلقهم إلا وأنت سعيد % 17(@)(@@) % و رب نجيب كابن أيوب واحد % تراه مع الحالات حيث تريد % 18(@)(@@) % صديق وما يغنى صديقك لم يطق % ثقيلا ولم يقرب عليه بعيد % 19(@)(@@) % أعد سجايا الأكرمين وتنقضي % % و أم سجاياه الكرام ولود % 20(@)(@@) % إذا قمت أتلوهن قالت لي العلا % % أعد والحديث المستحب يعود % PageV01P417 21(@)(@@) % و صدق وصفي والمحب بمعرض % من الريب آيات عليه شهود % 22(@)(@@) % يد في الندى ماء وقلب إذا التوت % عليه حبال المشكلات حديد % 23(@)(@@) % و مخضوبة الأطراف لم تصب عاشقا % % عميدا وكم أودي بهن عميد % 24(@)(@@) % قواطع أوصال البلاد سوائر % % و ما ثار عن أخفافهن صعيد % 25(@)(@@) % إذا نار حرب أضرمت أو مكيدة % فهن لها وما احترقن وقود % 26(@)(@@) % و علمه أن يصنع المجد منبت % عريق وبيت في السماء قعيد % 27(@)(@@) % و حامون بالرأي الجميع حماهم % و وفرهم عند الحقوق شريد % 28(@)(@@) % مطاعيم أرواح الشتاء إذا طغت % % سواجر في أبياتهم وركود % 29(@)(@@) % قيام إلى أضيافهم وعليهم % و لكنهم عند الملوك قعود % 30(@)(@@) % سخا بهم أن السخاء شجاعة % و شجعهم أن الشجاعة جود % PageV01P418 31(@)(@@) % وقيت من الحساد فيك فكل من % % يرى ودك الباقي علي حسود % 32(@)(@@) % يودون ما أصفيتني من مودة % و ما أصطفي من شكرها وأجيد % 33(@)(@@) % لبعضهم من بعضهم متخلص % و تأبى غلول بينهم وحقود % 34(@)(@@) % و عذراء مما استنجب الفكر وارتضى % % معقلة في الخدر وهي شرود % 35(@)(@@) % نجوم سجاياك الصباح إذا سرت % % قلائد في أعناقها 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms130# وعقود % 36(@)(@@) % إذا يوم عيد زفها قام ناصبا % % لتجهيز أخرى مثلها لك عيد % 37(@)(@@) % لها بعدما يفنى الزمان وأهله % % بقاء على أحسابكم وخلود % PageV01P419 البحر : - 1(@)(@@) % إذا صاح وفد السحب بالريح أو حدا % % و راح بها ملأى ثقالا أو اغتدى % % 2(@)(@@) % فكان وما باراه من عبراتنا % % نصيب محل بالجناب تأبدا % % 3(@)(@@) % و ما كنت لولاه ولو تربت يدي % % لأحمل في ترب لماطره يدا % % 4(@)(@@) % خليلي هذي دار لمياء فاحبسا % % معي واعجبا إن لم تميلا فتسعدا % % 5(@)(@@) % نعاتب فيها الدهر لا كيف عتبه % و أخلاقه إخلاق ما كان جددا % % 6(@)(@@) % سلاها سقاها ما يعيد زمانها % % و عيشا بها ما كان أحلى وأرغدا % % 7(@)(@@) % عهدنا لديك الليل يقطع أبيضا % % فلم صار فيك الفجر يطلع أسودا % % 8(@)(@@) % فأين الظباء العامراتك بالظبي % % ثنى وفرادي غافلات وشردا % % 9(@)(@@) % و ليل اختلاط لو تغاضى صباحه % لما مازت الأيدي القناع من الردا % % 10(@)(@@) % أبعد جلاء العين فيك من القذى % % أرى أثرا أني تلفت مرمدا % % PageV01P420 11(@)(@@) % لعمر الجوى في رفقتي بك إنه % % يخامر قرحان الحشا ما تعودا % % 12(@)(@@) % و قلت صدى قالوا الفرات الذي ترى % % و هيهات غير الماء ما نقع الصدى % % 13(@)(@@) % مضى الناس ممن كان يعتده الفتى % % و ما أكثر الباقين إن هو عددا % % 14(@)(@@) % و كان بكائي أنني لا أرى الأخ ال % % ودود فمن لي أن أرى المتوددا % % 15(@)(@@) % أمنعطف قلب الزمان بعاطش % يرى الأرض بحرا لا يرى فيه موردا % % 16(@)(@@) % تحمل شرقيا مع الركب شوقه % و قد غار شوق العاشقين وأنجدا % % 17(@)(@@) % له بين أثناء الجبال وأهلها % % مزار حبيب دونه طرق عدا % % 18(@)(@@) % و ما بي إلا أن أرى البدر ناطقا % % و ثهلان شخصا جالسا متوسدا % % 19(@)(@@) % و ليث الشرى تحت السرادق ملبدا % % و بحر الندى فوق الأسرة مزدا % % 20(@)(@@) % و أن أدرك العلياء شخصا مصورا % % هناك وألقى العز جسما محددا % % PageV01P421 21(@)(@@) % و من بلغته الأوحد الكافي المنى % % تغزل مكفيا وفاخر أوحدا % % 22(@)(@@) % لذاك اشتياقي ليس أن جازني له % % على البعد إحسان ولا فاتني ندى % % 23(@)(@@) % مواهبه سارت لحالي كثيفة % و شعري مطلوبا وذكري مشيدا % % 24(@)(@@) % فمن نعمة خضراء تسبق نعمة % له ويد بيضاء لاحقة يدا % % 25(@)(@@) % فتى لم أجد لي غيره 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms131# فأقول ما % % أعتم عطاء من فلان وأجودا % % 26(@)(@@) % أنال وفي الأيام لين وأيبست % فلم ينتقص ذاك النوال المعودا % % 27(@)(@@) % إذا بلغ الزوار بابك ألقيت % رحال ذليل عز أو حائر هدى % % 28(@)(@@) % و قل من الآراب قل ضممته % و قد جاز في الآفاق نهبا مطردا % % 29(@)(@@) % تغلق أبواب الملوك أمامه % و يرعى لديها الجهل وهي لقى سدى % % 30(@)(@@) % تدافعه آدابها وأكفها % % مدافعة السرح البعير المعبدا % % PageV01P422 31(@)(@@) % كما شاءها كانت ببعدك دولة % جفوت فقد صارت كما شاءها العدا % % 32(@)(@@) % فموكبها بعد السكينة نافر % و مركبها صعب وكان ممهدا % % 33(@)(@@) % عدا الدهر فيها إذ نأيت بصرفه % % و كان احتشاما منك يمشي مقيدا % % 34(@)(@@) % فإن يك ضرت هجرة بعث أحمد % فقد حط هجر الري رتبة أحمدا % % 35(@)(@@) % تعزل عنها والمقاليد عنده % % و وازرها والكد فيمن تقلدا % % 36(@)(@@) % أيخشى ابن إبراهيم فوت وزارة % و قد حازها سقف السماء وأبعدا % % 37(@)(@@) % و لما بدت للعين وقضاء جهمة % و كانت تريك البدر والظبي أجيدا % % 38(@)(@@) % معنسة أفنيت عمر شبابها % % فلم يبق إلا الشيب فيها أو الردى % % 39(@)(@@) % نهضت على الإحسان فيها ولم تقم % % و عيشك إلا وهي تزعج مقعدا % % 40(@)(@@) % تزوجتها أيام تنكح لذة % و سرحت إذ كان النكاح تمردا % % PageV01P423 41(@)(@@) % و خلفتها قاعا يغر سرابها % % يدي حافر لم يسق منها سوى الكدا % % 42(@)(@@) % قليل اطلاع في العواقب لو درى % % مشقة ما في منصدر ما توردا % % 43(@)(@@) % تلبسها جهلا بأنك لم تكن % % لتنزعها لو كنت تنزع سؤددا % % 44(@)(@@) % تحدثني عنك الأماني حكاية % بما أنا لاق منك كالصوت والصدى % % 45(@)(@@) % و كم زائر منا حملت اقتراحه % % مضى ساحبا رجلا وآب مقودا % % 46(@)(@@) % و مثلي لو دوني أتاك بنفسه % % ذنابي وولي عنك رأسا مسودا % % 47(@)(@@) % عسى عزمة أوت فمثلت كاتبا % % يقرطس أحيانا فأمثل منشدا % % 48(@)(@@) % و قائلة هل يدرك الحط قاعدا % فقلت لها هل يقطع السيف مغمدا % % 49(@)(@@) % سيلقى بها الكافي عهودا وثيقة % لقد زادها الإسلام حقا وأكدا % % 50(@)(@@) % رضيت وإن جد الجدوب تعففا % % و عيشا مع الوجه المصون مبددا % % PageV01P424 51(@)(@@) % و ميلا بنفسي عن لقاء معاشر % أحتهم صخرا وأعصر جلمدا % % 52(@)(@@) % أرادوا ببخل أن يذموا فيعرفوا % % خمولا كما أعطيت أنت لتحمدا % % 53(@)(@@) % أعالج نفسا منهم مقشعرة 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms132# % و أنفا إذا شموا المذلة أصيدا % % 54(@)(@@) % هو المنقذى من شرك قومي وباعثي % % على الرشد أن أصفى هواي محمدا % % 55(@)(@@) % و تارك بيت النار يبكي شراره % علي دما أن صار بيتي مسجدا % % 56(@)(@@) % عليك بها وصالة رحم الندى % % إذا اشتمل الشعر العقوق أو ارتدى % % 57(@)(@@) % هجرنا لها اللفظ المقلقل قربه % إلى السمع والمعنى العوان المرددا % % 58(@)(@@) % يخال بها الراوي إذا قام منشدا % % بما ملك ا طراب قام مغردا % % 59(@)(@@) % لكم آل إبراهيم نهدي مدائحا % % و ذما إلى أعدائكم وتهددا % % 60(@)(@@) % إذا عز ملك أن يدوم لمالك % و طال على ذي نعمة أن يخلدا % % PageV01P425 61(@)(@@) % فلا تعدم الدنيا الوساع مدبرا % % يقوم بها منكم ولا الناس سيدا % % PageV01P426 البحر : - 1(@)(@@) % أنت على حالتيك محمود % إن كان بخل لديك أو جود % 2(@)(@@) % يشقى ويرضى بك الفؤاد كما الط % % رف إذا ما رآك مسعود % 3(@)(@@) % يا غصنا دهره الربيع فما % % يفترق الماء فيه والعود % 4(@)(@@) % فات بك الحسن أن تحد ولل % % بدر بما انحط عنك تحديد % 5(@)(@@) % قم حدث الليل عن أواخره % % إن مقام الصبوح مشهود % 6(@)(@@) % يا ظبي لو بتض فيه عدت وقد % % عن ظباء ببابل غيد % 7(@)(@@) % أما ترى الفطر صائحا نورزوا % % حلض حرام وانحل معقود % 8(@)(@@) % و البدر يدعو بحاجب حاجب % للعيد بشرى هنالك العيد % 9(@)(@@) % فاسبق بها الشمس أختها لهبا % % بقاؤها في الزمان تخليد % 10(@)(@@) % صان اليهودي خدرها أن يف % % ض الختم أو تؤخذ المقاليد % PageV01P427 11(@)(@@) % عد رجلا من قومه لهم % في فضلها عنده أسانيد % % 12(@)(@@) % سن له اللهو أن يعظمها % % فهي له في الدنان معبود % 13(@)(@@) % حمراء ما فازت الأكف به % % من لونها في الخدود مردود % 14(@)(@@) % من فم إبريقها إلى شفة ال % % كأس عمود الصباح ممدود % 15(@)(@@) % دين من اللهو أنت عن باب إب % % ليس متى حدت عنه مطرود % 16(@)(@@) % تغنم اليوم من سرورك وال % % ساعة إن الزمان معدود % 17(@)(@@) % ما دام يدعونك الفتى مرحا % % و الغصن فينان والصبا رود % 18(@)(@@) % غدا بياض يا قاتل الله ما % % تنشق عنه من بيضك السود % 19(@)(@@) % لا تجمع الشيب والسرور يد % و لا يتم الثراء والجود % 20(@)(@@) % لا أخلف المال غير متلفه % إن الغنى البخيل مكدود % PageV01P428 21(@)(@@) % يا راكبا لم تلحه 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms133# هاجرة % و لا ترامت بشخصه البيد % 22(@)(@@) % و لم تقد حظه مخاطرة % تنضي إليها المهرية الفود % 23(@)(@@) % بين مناه وبينه غرض ال % % رامي سداد منه وتعضيد % 24(@)(@@) % قل لابن عبد الرحيم عشت فما % % يعدم فضل وأنت موجود % 25(@)(@@) % ملكك المجد أن بابك مف % % توح وباب الأرزاق مسدود % 26(@)(@@) % يزدحم الناس فيه راجين را % % ضين وحوض الكريم مورود % 27(@)(@@) % و أن عافيك والمكلف مش % % نوء مراد لديك مودود % 28(@)(@@) % لا هو في الذل بالسؤال ولا % % بالمن فيما مننت مكدود % 29(@)(@@) % يختلف الناس من كرامته % % عندك من قاصد ومقصود % 30(@)(@@) % و البشر حتى يقال بارقة % و الحلم حتى يقال جلمود % PageV01P429 31(@)(@@) % يلبسك المدح كل ضافية % لها بطول الإخلاق تجديد % 32(@)(@@) % در المعالي فيها يوصفك من % % ظوم ووشي الألفاظ منضود % 33(@)(@@) % تخبر منه ما أنت ناقده % % و أكثر الإنتقاد تقليد % 34(@)(@@) % و الشعر ما لم توجدك آيته % إلا القوافي والوزن مفقود % 35(@)(@@) % يتعب فيه الموفرون له % % و هو مع المسهلين موؤود % % 36(@)(@@) % بقيت منه لزائراتك بالثناء % غيدا أكفاؤها الصيد % 37(@)(@@) % كل فتاة محدوها يوم تب % % غى الحظ إما أتتك مجدود % 38(@)(@@) % صديقها أنت والحسود بها % % و بي على القرب منك مفؤود % 39(@)(@@) % في وجهه البشر حين يسمعها % % خوفا وفي قلبه الأخاديد % 40(@)(@@) % يطرب منها للشيء يحزنه % و اسم بكاء الحمام تغريد % PageV01P430 41(@)(@@) % لا اجتاز عيد إلا عليك وإن % % أجزت أن تمطل المواعيد % PageV01P431 البحر : - 1(@)(@@) % إذا لم يرع عندكم الوداد % فسيان القرابة والبعاد % 2(@)(@@) % عهود يوم رامة دارسات % كما يتناوب الطلل العهاد % 3(@)(@@) % و أيمان تضيع بها المعاني % % و تحفظها الأنامل والعداد % 4(@)(@@) % تطير مع الخيانة كل جنب % و حبات القلوب بها تصاد % 5(@)(@@) % أمعترض صدودك أم سعد % ببعض الشر أم خلق وعاد % 6(@)(@@) % و عذل فيك أوجع نازل بي % % أنا الملسوع والعذل العداد % 7(@)(@@) % و عبت وليس غير الشيب شيئا % % أذاد له بعيب أو أكاد % 8(@)(@@) % و ما منى البياض فتجرميني % % به ذنبا ولا منك السواد % 9(@)(@@) % بأيمن ملتقى الماءين دار % لمرتاد الهوى فيها مراد % 10(@)(@@) % وقفت ومسعدون معي عليها % % ألا يا دار ما فعلت سعاد % PageV01P432 11(@)(@@) % أقول لهم أعلل فيك شوقي % % و شيكا ينقع الظمأ الثماد % 12(@)(@@) % خذوا من يومكم لغد نصيبا % % من الأطلال 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms134# إن اليوم زاد % 13(@)(@@) % توق الحب تأمن كل بغض % فداؤك من ذوائك مستفاد % 14(@)(@@) % يخوفني مكايده زماني % % صغارك لا أحس ولا أكاد % 15(@)(@@) % و قدرته إذا لم يعط بخل % و غايته إذا أعطى نفاد % 16(@)(@@) % فقل لبنيه لست إذا أخاكم % % بعاد بيننا أبدا بعاد % 17(@)(@@) % أعان الله مسكينا رجاكم % % فإن رجاء مثلكم جهاد % 18(@)(@@) % رضينا من قبائلكم ببيت % عماد المكرمات له عماد % 19(@)(@@) % بنى عبد الرحيم وكل فخر % % يفوت فباسم نسبتهم يفاد % 20(@)(@@) % أعد ذكر التحية في أناس % إذا بدءوا إليك يدا أعادوا % % PageV01P433 21(@)(@@) % و قم واخطب بحمدك في ربوع % وفود المجد عنها لا تذاد % 22(@)(@@) % و مبتسمين يورى الملك منهم % % جباها كل واضحة زناد % 23(@)(@@) % رأوا حفظ النفوس إذا استميحوا % % و قد بخل الحيا بخلا فجادوا % % 24(@)(@@) % فدى للمحسنين فتى علاهم % % و ناشرها وقد درسوا وبادوا % % 25(@)(@@) % دعي في السماح وليس منه % % متى اعترف الندى بك يا زياد % 26(@)(@@) % دع العلياء يسحبها عريق % بياضك يوم نسبته سواد % 27(@)(@@) % يطول ركابه إن قام فيها % % و يقصر عن مقلده النجاد % 28(@)(@@) % أيا ابن علي اعتقلتك منى % يد لم تدر قبلك ما العتاد % 29(@)(@@) % عركت يد الخطوب وفي ضعف % فلن وهن أعباء شداد % 30(@)(@@) % لذلك تستزاد الشمس نورا % % و حبيك الذي لا يستزاد % PageV01P434 31(@)(@@) % و حظك من جنى فكري ثناء % يطول وطوله فيك اقتصاد % 32(@)(@@) % إذا الشيء المعاد أمل سمعا % % تكرر وهو طيبا يستعاد % 33(@)(@@) % فما خطبت بأبلغ منه خاء % و لا نطقت بأفصح منه ضاد % 34(@)(@@) % ألا لا تذكر الدنيا بخير % فتى إلا وأنت به المراد % 35(@)(@@) % إذا حاز امرؤ تأييد نجل % أمدك من أبي سعد مداد % 36(@)(@@) % شبيهك والعلا منها اكتساب % % و منها وهو أفضلها ولاد % 37(@)(@@) % و كنت البدر تم فزيد نجما % % كما أوفى بغرته الجواد % 38(@)(@@) % فعش واذخره للعافين كهفا % % و خير ذخيرة الجسم الفؤاد % PageV01P435 البحر : - 1(@)(@@) % أبا لغور تشتاق تلك النجودا % % رميت بقلبك مرمى بعيدا % % 2(@)(@@) % وفيت فكيف رأيت الوفاء % يذل العزيز ويضوي الجليدا % % 3(@)(@@) % أفي كل دار تمر العهود % عليك ولم تنس منها العهودا % % 4(@)(@@) % فؤاد أسير ولا يفتدى % % و جفن قتيل البكا ليس يودي % % 5(@)(@@) % سهرنا ببابل للنائمي % % ن عما نقاسى بنجد رقودا % % 6(@)(@@) % من العربيات شمس 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms135# تعود % بأحرار فارس مثلي عبيدا % % 7(@)(@@) % إذا قومها افتخروا بالوفا % % ء والجود ظلت ترى البخل جودا % % 8(@)(@@) % و لو أنهم يحفظون الجوا % % ر ردوا على فؤادا طريدا % % 9(@)(@@) % نعم جمع الله يا من هويت % و صد عليك الهوى والصدودا % % 10(@)(@@) % رنت عينه ورأت مقتلي % % ففوقها ورماني سديدا % % PageV01P436 11(@)(@@) % قلوب الغواني حديد يقال % و قلبك نار تذيب الحديدا % % 12(@)(@@) % سأجري مع الناس في شوطهم % % فعالا بغيضا وقولا وديدا % % 13(@)(@@) % أغر ببشر أخي في اللقا % % ء لو تبع الغيث تلك الرعودا % % 14(@)(@@) % و يعجبي الماء في وجهه % % و في قلبه الغل يذكي وقودا % % 15(@)(@@) % مريبون أوسعهم حجة % و عذرا معي من يكون الحسودا % % 16(@)(@@) % و حاد فلست ترى المستري % % ح في الناس من لا تراه الوحيدا % % 17(@)(@@) % و حازت سجايا ابن عبد الرحيم % % ثناء كسؤدده لن يبيدا % % 18(@)(@@) % و مدحا إذا مات مجد الرجا % % ل أعطى الذي سار فيه الخلودا % % 19(@)(@@) % تمهد من فارس ذروة % تحط المجرة عنها صعودا % % 20(@)(@@) % مكانة لا تستفز العيو % % ب فخرا ولا يغمز اللؤم عودا % % PageV01P437 21(@)(@@) % تشابه عرق وأغصانه % كما بدئ المجد فيهم أعيدا % % 22(@)(@@) % فعد الكواكب منهم بنين % و عد الأهاضيب منهم جدودا % % 23(@)(@@) % سعدت بحبك لو أنني % % لحظي منك رزقت السعودا % % 24(@)(@@) % إلام توان يميت الوفاء % و عندي ضمان يحل العقودا % % 25(@)(@@) % و نقص اهتمام أرى مكرها % لجودك من أجله مستزيدا % % 26(@)(@@) % أما آن للعادة المرتضا % % ة من رحب صدرك لي أن تعودا % % 27(@)(@@) % و لو لم يكن ماء وجهي يذوب % بها ثمنا لم يرعني جمودا % % 28(@)(@@) % أمان صدرن بطانا وعدن % خمائص مما رعين الوعودا % % 29(@)(@@) % إلى الله محتسبا عنده % % بعثت هوى مات فيكم شهيدا % % 30(@)(@@) % على ذاك ما قصرت دولة % % فطاول زمانك بيضا وسودا % % PageV01P438 31(@)(@@) % و لا تبرحن بشعري عليك % % عرائس يجلين هيفا وغيدا % % 32(@)(@@) % تخال اليماني حاك البرود % إذا أنا قصدت منها القصيدا % % 33(@)(@@) % و لي كل عيد بها وقفة % أناشد عطفك فيها نشيدا % % 34(@)(@@) % تهان يغص التقاضي بها % % فهل أنا لا أتقاضاك عيدا % % PageV01P439 البحر : - 1(@)(@@) % إما تقومون كذا أو فاقعدوا % % ما كل من رام السماء يصعد % 2(@)(@@) % نام على الهون الذليل ودرى % % جفن العزيز لم بات يسهد % 3(@)(@@) % أخفكم سعيا إلى سودده % % أحقكم 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms136# بأن يقال سيد % 4(@)(@@) % عن تعب أورد ساق أولا % % و مسحت غرة سباق يد % 5(@)(@@) % لو شرف الإنسان وهو وادع % لقطع الصمصام وهو مغمد % 6(@)(@@) % هيهات أبصرت العلاء وعشوا % % عنه فضلوا سبله وتجد % 7(@)(@@) % يا عمدة الملك وأي شرف % طال ولم ترفعه منكم عمد % 8(@)(@@) % لله هذا اليوم يوما أنجز ال % % دهر به ما كان فيه يعد % 9(@)(@@) % لما طلعت البدر من ثنية % تجلى بها عين وعين ترمد % 10(@)(@@) % من شفق الشمس يسدى ثوبها % % و تلحم الجوزاء أو تعمد % PageV01P440 11(@)(@@) % دق وجل فهو إن لامسته % سبط وإن مارسته مجعد % 12(@)(@@) % متوجا عمامة وإنما % % عمامة الفارس تاج يعقد % 13(@)(@@) % ممتطيا أتلع لو حبسته % تحتك قيل فدن مشيد % 14(@)(@@) % مناقلا بأربع كأنما % % يلاطم الجليد منها جلمد % 15(@)(@@) % وقرها خوفك فهو مطلق % ينقلها كأنه مقيد % 16(@)(@@) % خف بطبع عتقه وآده % % ثقل الحلى فمشيه تأود % 17(@)(@@) % مقلدا مهندا ما ضمه % % قبلك إلا خافه مقلد % 18(@)(@@) % أبيض لا يعطيك عهدا مثله % إذا أخوك حال عما تعهد % 19(@)(@@) % إذا ادرعت في الدجى فقبس % و إن توسدت الثرى فعضد % 20(@)(@@) % ما اعتدت كسب العز إلا معه % و المرء مشاء وما يعود % PageV01P441 21(@)(@@) % ما زال فخر الملك في أمثالها % % يرشد في آرائه ويسعد % 22(@)(@@) % فكيف لا وأنت من فؤاده % % عزا وعينيه المكان الأسود % 23(@)(@@) % و لو ركبت أرحلا لكان لي % % فيك براق بالمنى مزود % 24(@)(@@) % أنت الذي جمعتني من معشر % شمل العلاء بينهم مبدد % 25(@)(@@) % كأنني آخذ ما أعطيهم % من مدحي إذا نطقت أنشد % 26(@)(@@) % أبحتني مجدك إذ أرحتني % % ممن أذم منهم وأحمد % PageV01P442 البحر : - 1(@)(@@) % ليتك لما لم تكن مسعدا % % أو مصلحا لم تكن المفسدا % % 2(@)(@@) % كنت كثيرا بك فيما يرى % % ظني فكثرت عديد العدا % % 3(@)(@@) % وشى وقد قدمته رائدا % % لا تبعث الظلمة مسترشدا % % 4(@)(@@) % يسومني الغدر بعهد اللوى % % ما حق من يغدر أن يعهدا % % 5(@)(@@) % غيري أبو الألوان في حبه % % يشكو الهوى اليوم ويسلوا غدا % % 6(@)(@@) % أصبو إلى طيبة من بابل % ما أقرب الشوق وما أبعدا % % 7(@)(@@) % يا فارس الغيداء يبغي منى % بلغ بلغت الرشأ الأغيدا % % 8(@)(@@) % يا حبذا الذكرى وإن أسهرت % بعدك والدمع وإن أرمدا % % 9(@)(@@) % لا تأخذ النفر بتقريقنا % % فربما عاد لنا موعدا % % 10(@)(@@) % بالغور دار و بنجد 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms137# هوى % يا لهف من غار لمن أنجدا % % PageV01P443 11(@)(@@) % ما كان سلمى يوم فارقتكم % % يا سلم منى حاملا أجلدا % % 12(@)(@@) % سجية في الصبر عودتها % % قلبي والقلب وما عودا % % 13(@)(@@) % لم تدنني الأيام من عدلها % % قط فألقى الجور مستبعدا % % 14(@)(@@) % و إنما ينكر من عيشه % أنكده من عرف الأرغدا % % 15(@)(@@) % حوادث أعجب من كرها % % أن أتشكاها وأن أحسدا % % 16(@)(@@) % ليت بني الدنيا التي لا ترى % % لي نسبا منها ولا مولدا % % 17(@)(@@) % كفتهم عني أو ليتهم % كانوا جميعا للحسين الفدى % % 18(@)(@@) % للقمر الفرد وهل مالك % في الأفق غير البدر أن يفردا % % 19(@)(@@) % لا يحسب الطيب من ماله % % ما لم يكن معترضا للجدا % % 20(@)(@@) % و كان أغنى حسبا عندهم % من لم يزل أفقر منهم يدا % % PageV01P444 21(@)(@@) % و الأبيض الرأي إذا ما شكا % % خابط ليل رأيه الأسودا % % 22(@)(@@) % و فارس القولة لم يستقم % في ظهرها الفارس إلا ارتدى % % 23(@)(@@) % و سالك الخطب وقد أظلمت % محجة بالنجم لا تهتدى % % 24(@)(@@) % ما شيم منكم صارم مغمد % إلا وأمضى منه ما جردا % % 25(@)(@@) % و لا قضى الله على سيد % قضاءه إلا اجتبى سيدا % % 26(@)(@@) % إن بدأوا تمم أو نقصوا % % أنعم أو حطوا علا شيدا % % 27(@)(@@) % كأنه أرضع ثدي النهى % % أو شاب من حنكته أمردا % % 28(@)(@@) % لا عاق أنوارك يا بدرهم % ما ينقص البدر إذا زيدا % % 29(@)(@@) % و لا أغبتكم على عادها % % ما أفطر الصائم أو عيدا % % 30(@)(@@) % بواكر من مدحي تقتفي % % في صونها آثاركم في الندى % % PageV01P445 31(@)(@@) % تجلو على الألباب أحسابكم % بواديا في حليها عودا % % 32(@)(@@) % تبقى على الدهروساع الخطا % % في جوبها الأرض طوال المدى % % 33(@)(@@) % يزيدها ترديدها جدة % و يخلق القول إذا رددا % % PageV01P446 البحر : - 1(@)(@@) % لا تلمس الشمس يد % فما يرد الحسد % 2(@)(@@) % ما لمريد حسنها % % إلا الأسى والكمد % 3(@)(@@) % يفنى نزولا ولها % % علاؤها والخلد % 4(@)(@@) % أرى نفوسا ضلة % تنشد ما لا تجد % 5(@)(@@) % تحسب بالكسب العلا % % ء والعلاء مولد % 6(@)(@@) % أفضحها مفند % لو سد غيظا فند % 7(@)(@@) % و كل قلب قرحة % % يشف عنه الجسد % 8(@)(@@) % أبرده بعذلي % % لو أن نارا تبرد % 9(@)(@@) % هيهات من دوائها % % و داؤها محمد % 10(@)(@@) % فات على أطماعه % حمى العيون الفرقد % PageV01P447 11(@)(@@) % شوقها لحاقه % جهل الحظوظ المسعد % 12(@)(@@) % و نعم نابتة % مع الربيع جدد % 13(@)(@@) % حدثها أضغاثها % % هذا 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms138# السراب الموقد % 14(@)(@@) % و الصبح في تكذيبها % % إن بلغوه الموعد % 15(@)(@@) % يا حاسدي محمد % لا تطلبوه واحسدوا % % 16(@)(@@) % شريعة مورودة % لو أصدرت من يرد % 17(@)(@@) % منتكم جدودكم % % أن السبيل جدد % 18(@)(@@) % تنكبوا فإنما % % على الطريق الأسد % 19(@)(@@) % أغيد لا ينجى الرقا % % ب من يديه الجيد % 20(@)(@@) % أوفى على مرقبه % % لكفه ما يرصد % PageV01P448 21(@)(@@) % أزب ما من قرة % خيطت عليه اللبد % 22(@)(@@) % إذا غدا لسفر % أقسم لا يزود % 23(@)(@@) % الناجيات عنده % % وذية ونقد % 24(@)(@@) % قد قلت لما أجمعوا % % و أنت عنهم مفرد % 25(@)(@@) % تخبط عشواؤهم % ما فعل المقود % 26(@)(@@) % البدر في أمثالها % % حنادسا يفتقد % 27(@)(@@) % ضاع بياض ناركم % % و الليل بعد أسود % 28(@)(@@) % أكرمكم أحقكم % % بأن يقال سيد % 29(@)(@@) % دل على آياته % فما لنا نقلد % 30(@)(@@) % و ناقص الشكة مض % % عوف الحشا معود % PageV01P449 31(@)(@@) % صم القنا الصلاب من % % خوره تقصد % 32(@)(@@) % يطولها شوارعا % % و هو لقى موسد % 33(@)(@@) % إذ الكمال كله % % في جسد يحدد % 34(@)(@@) % ما تلد الأرض كذا % % و الأرض بعد تلد % 35(@)(@@) % قل لبني الآراب تج % % فى والمنى تشرد % 36(@)(@@) % و الحاج يلقى دونه % % ن الحز المزيد % 37(@)(@@) % الكوفة الكوفة يا % % مغور يا منجد % 38(@)(@@) % ما الناس إلا رجل % و الأرض إلا بلد % 39(@)(@@) % من راكب مربعة % تم عليها العدد % 40(@)(@@) % موضوعة الرحل تل % % س حكمها وترد % PageV01P450 41(@)(@@) % يمد قيد الرمح ظ % % لا قصرها المشيد % 42(@)(@@) % تحمله مخفة % و لو علاها أحد % 43(@)(@@) % تخد في الصخر ملا % % طم عليها تخد % 44(@)(@@) % عجلى إذا ما الساق صا % % دت ما تثير العضد % 45(@)(@@) % لم يدر لحظ ضابط % ما رجلها وما اليد % 46(@)(@@) % بلغ بلغت راشدا % % تسري ويحدو مرشد % 47(@)(@@) % شوقا يقض نبله ال % % أضلاع وهي زرد % 48(@)(@@) % دام على حصاة قل % % بي ويذوب الجلمد % 49(@)(@@) % أفنى الوقود كبدي % % فهل يحس الموقد % 50(@)(@@) % كم يسعد الصبر ترى % % بعدك خان المسعد % PageV01P451 51(@)(@@) % على من الفضل وقد % % فارقته يعتمد % 52(@)(@@) % يا طول ذمي للنوى % % هل من لقاء يحمد % 53(@)(@@) % متى فقد طال المدى % % لكل شيء أمد % 54(@)(@@) % يا باعث النعمى التي % % آياتها لا تجحد % 55(@)(@@) % لو كتمت تطلعت % من حسن حالي تشهد % 56(@)(@@) % كانت سداد رحلة % أصيب فيها المقصد % 57(@)(@@) % رممت منها ثلما % % ما خلتها تسدد % 58(@)(@@) % علك من مطلي بالش % % كر عليها تجد % 59(@)(@@) % ما كان تقصيرا فهل % % يقتصر 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms139# المجتهد % 60(@)(@@) % لكنها عارفة % من الثناء أزيد % PageV01P452 61(@)(@@) % أفسدني إفراطها % % بعض العطاء يفسد % 62(@)(@@) % و الجود ما أسرف وال % % إمساك فيه أجود % 63(@)(@@) % و الآن رثت مسكة % فاسمع لها أجدد % 64(@)(@@) % تأتيك بشرى ما تسو % % د أبدا وتسعد % 65(@)(@@) % و ما تصوم مرضا % بقاك أو تعيد % 66(@)(@@) % سنين لا يضبطه % % ن في الحساب عدد % 67(@)(@@) % إن عاقني دهر أقو % % م أبدا ويقعد % 68(@)(@@) % عن المثول اليوم ما % % بين يديك أنشد % 69(@)(@@) % فربما قمت غدا % إن أخا اليوم غد % PageV01P453 البحر : - 1(@)(@@) % أقريش لا لفم أراك ولا يد % فتوا كلى غاض الندى وخلا الندى % % 2(@)(@@) % خولست فالفتي بأوقص واسئلي % % من بز ظهرك وانظري من أرمد % 3(@)(@@) % وهبي الذحول فلست رائد حاجة % تقضي بمطرور ولا بمنهد % 4(@)(@@) % خلاك ذو الحسين أنقاضا متى % % تجذب على حبل المذلة تنقد % 5(@)(@@) % قمر الدنا أضحت سماؤك بعده % % أرضا تداس بحائر وبمهتدى % % 6(@)(@@) % فإذا تشادقت الخصوم فلجلجي % % و إذا تصادمت الكماة فعردي % % 7(@)(@@) % يا ناشد الحسنات طوف فاليا % % عنها وعاد كأنه لم ينشد % % 8(@)(@@) % اهبط إلى مضر فسل حمراءها % % من ضاح بالبطحاء يا نار اخمدي % % 9(@)(@@) % بكر النعي فقال أردي خيرها % % إن كان يصدق فالرضي هو الردي % % 10(@)(@@) % عادت أراكة هاشم من بعده % % خورا لفأس الحاطب المتوقد % PageV01P454 11(@)(@@) % فجعت بمعجز آية مشهودة % و لرب آيات لها لم تشهد % 12(@)(@@) % كانت إذا هي في الإمامة نوزعت % ثم ادعت بك حقها لم تجحد % 13(@)(@@) % رضي الموافق والمخالف رغبة % بك واقتدى الغاوي برأي المرشد % 14(@)(@@) % ما أحرزت قصباتها وتراهنت % إلا وظهرت بفضلة من سؤدد % 15(@)(@@) % تبعتك عاقدة عليك أمورها % % و عرى تميمك بعد لما تعقد % 16(@)(@@) % و رآك طفلا شيبها وكهولها % % فتزحزحوا لك عن مكان السيد % 17(@)(@@) % أنفقت عمرك ضائعا في حفظها % % و عققت عيشك في صلاح المفسد % 18(@)(@@) % كالنار للساري الهداية والقرى % % من ضوئها ودخانها للموقد % 19(@)(@@) % من راكب يسع الهموم فؤاده % و تناط منه بقارح متعود % 20(@)(@@) % ألف التطوح فهو ما هددته % % يفري فيافي البيد غير مهدد % PageV01P455 21(@)(@@) % يطوي المياه على الظما وكأنه % % عنها يضل وإنه للمهتدي % % 22(@)(@@) % صلب الحصاة يثور غير مودع % % عن أهله ويسير غير مزود % 23(@)(@@) % عدلت جويته على ابن مفازة % مستقرب أمم الطريق الأبعد % 24(@)(@@) % يجري على أثر الراب 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms140# كأنه % % يمشي على صرح بهن ممرد % 25(@)(@@) % يغشى الوهاد بمثلها من مهبط % و ربا الهضاب بمثلها من مصعد % 26(@)(@@) % قرب قربت من التلاع فإنها % % أم المناسك مثلها لم يقصد % 27(@)(@@) % دأبا به حتى تريح بيثرب % فتنيخه نقضا بباب المسجد % 28(@)(@@) % و احث التراب على شحوبك حاسرا % % و انزل فعز محمدا بمحمد % 29(@)(@@) % و قل انطوى حتى كأنك لم تلد % منه الهدى وكأنه لم يولد % 30(@)(@@) % نزلت بأمتك المضاعة في ابنك ال % % مفقود بنت العنقفير المؤيد % PageV01P456 31(@)(@@) % طرقته تأخذ ما اطفته ولا ترى % % مكرا وتقتل من نحته ولا تدى % % 32(@)(@@) % نشكو إليك وقود جاحمها وإن % % كانت تخصك بالملظ المكمد % 33(@)(@@) % بكت السماء له وودت أنها % % فقدت غزالتها ولما يفقد % 34(@)(@@) % و الأرض وابن الحاج سدت سبله % و المجد ضيم فما له من منجد % 35(@)(@@) % و بكاك يومك إذ جرت أخباره % ترحا وسمي بالعبوس الأنكد % 36(@)(@@) % صبغت وفاتك فيه أبيض فجره % % با للعيون من الصباح الأسود % 37(@)(@@) % إن تمس بعد تزاحم الغاشين مه % % جورا بمطرحة الغريب المفرد % 38(@)(@@) % فالدهر ألأم ما علمت وأهله % من أن تروح عشيرهم أو تغتدي % % 39(@)(@@) % و لئن غمرت من الزمان بلين % عن عجم مثلك أو عضضت بأدرد % 40(@)(@@) % فالسيف يأخذ حكمه من مغفر % % و طلى ويأخذ منه سن المبرد % PageV01P457 41(@)(@@) % لو كان يعقل لم تنلك له يد % لكن أصابك منه مجنون اليد % 42(@)(@@) % قد كان لي بطريف مجدك سلوة % عن سالف من مجد قومك متلد % 43(@)(@@) % فكأنكم ومدى بعيد بينكم % % يوم افتقدتك زلتم عن موعد % 44(@)(@@) % يا مثكلا أم الفضائل مورثا % % يتما بنات القاطنات الشرد % 45(@)(@@) % خلفتهن بما رضينك ناظما % % ما بين كل مرجز ومقصد % 46(@)(@@) % فتحت بهن وقد عدمتك ناقدا % % أفواه زائفة اللهى لم تنقد % 47(@)(@@) % ورثيت حتى لو فرقت مميزا % % راثيك من هاجيك لم تستبعد % 48(@)(@@) % غادرتني فيهم بما أبغضته % أدعو البيوع إلى متاع مكسد % 49(@)(@@) % أشكو انفراد الواحد الساري بلا % % أنس وإن أحرزت سبق الأوحد % 50(@)(@@) % و إذا حفظتك باكيا ومؤنبا % % عابوا عليك تفجعي وتلددي % % PageV01P458 51(@)(@@) % أحسنت فيك فساءهم تقصيرهم % ذنب المصيب إلى المغير المعضد % 52(@)(@@) % كانوا الصديق رددتهم لي حسدا % صلي الإله على مكثر حسدي % % 53(@)(@@) % يغير فيك الشامتون وإنه % % يوم هم 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms141# رهن عليه إلى غد % 54(@)(@@) % و سيسبروني كيف قطع مجردي % % إن كان حز ولم يعمق مغمدي % % 55(@)(@@) % و تثير عارمة الرياح سحابتي % % من مبرق في فضل وصفك مرعد % 56(@)(@@) % فتقت بذكرك فأرها فتفاوحت % % نعما تأرج لي بطيب المولد % 57(@)(@@) % تزداد طولا ما استرحت فإنني % % أرثيك بعد وحرقتي لم تبرد % 58(@)(@@) % ماء الأسى متصبب لي لم يغض % في صحن خد بالبكاء مخدد % 59(@)(@@) % لو قد رأيت مع الدموع جدوبه % فرط الزفير عجبت للراوي الصدى % % 60(@)(@@) % لا غيرتك جنائب تحت البلى % % و كساك طيب البيت طيب الملحد % PageV01P459 61(@)(@@) % و قربت لا تبعد ؛ وإن علالة % للنفس زورا قولتي لا تبعد % PageV01P460 البحر : - 1(@)(@@) % حاشاك من عارية ترد % ابيض ذاك الشعر المسود % 2(@)(@@) % أشرف بازي على عزابه % % حتى ذوي الغصن ولان الجعد % 3(@)(@@) % أتعبني بخاضب مصدد % لو كان من هجومه يصد % 4(@)(@@) % و ثالم بلقطه ثنية % معروفة من يومها تسد % 5(@)(@@) % يصبغ سوداء ودون أخذه % % بيضاء تخفي تارة وتبدو % % 6(@)(@@) % أخلق جاهي في ذوات الخمر مذ % % ليث خمار لي مستجد % 7(@)(@@) % قلن وقد عتبت في وثائق % % نقضنها ما غادة وعهد % 8(@)(@@) % نافى بك الشيب بطالات الصبا % % الليل هزل والنهار جد % 9(@)(@@) % فقلت نصل لا يذم عتقه % قلن فأين الماء والفرند % 10(@)(@@) % كان قناة فغدا حنية % ظهرك ما القضيب إلا القد % PageV01P461 11(@)(@@) % سائل بني سعد وأي مأثم % لم يتقلد منك ظلما سعد % 12(@)(@@) % أهند قالت ملني وحلفت % تحللي حالفة يا هند % 13(@)(@@) % أمنك بين أضلعي جناية % أعجب بها نارا خباها زند . % 14(@)(@@) % وعدك لم أخلف يوم بابل % بل كان سحرا واسمه لي وعد % 15(@)(@@) % خصرك صعفا واللسان ملقا % دقا عليك أن يصح عقد % 16(@)(@@) % ضاع الهوى ضياع من يحفظه % % و مات مع أهل الوفاء الود % 17(@)(@@) % أنج ربيح العرض واقعد حجرة % منفردا إن الحسام فرد % 18(@)(@@) % كم مستريح في ظلال نعمة % و أنت في تأميله تكد % 19(@)(@@) % طالك بالمال ولو أريته % صونا رآك معه تعد % 20(@)(@@) % ملكت نفسي مذ هجرت طمعي % % اليأس حر والرجاء عبد % PageV01P462 21(@)(@@) % و لو علمت رغبة تسوق لي % % نفعا لخفت أن يضر الزهد % 22(@)(@@) % جربت أخلاق الرجال فإذا % % بسمحها مع السؤال نكد % 23(@)(@@) % و رمت أيديهم بكل رقية % تلين والأيدي معي تشتد % 24(@)(@@) % لم 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms142# يعيني فضل أداريهم به % % و إنما أعيا علي الجد % 25(@)(@@) % ما كان من شعشع لي سرابه % غر فمي وقلت ماء عد % 26(@)(@@) % في الناس من معروفه في عنقي % % غل وفيهم من جداه عقد % 27(@)(@@) % مثل الحسين إن طلبت غاية % فاتت وهل مثل له أوند % 28(@)(@@) % فات الرجال أن ينالوا مجده % % مشمر للمجد مستعد % 29(@)(@@) % غلس في إثر العلا وأشمسوا % % فجاء قبلا والنجوم بعد % 30(@)(@@) % و من بني عبد الرحيم قمر % كل لياليه تمام سعد % PageV01P463 31(@)(@@) % ما نطفة المزن صفت طاهرة % أطيب مما ضم منه البرد % 32(@)(@@) % لابنه لا تلف القضيب عاسيا % و اصعب يزاحمك ثقيلا أحد % 33(@)(@@) % من المحامين على أحسابهم % % بمالهم فالفقر فيهم مجد % 34(@)(@@) % لا يتمنون على حظوظهم % % أن يجدوا دنيا إذا لم يجدوا % % 35(@)(@@) % سخوا ولم تبن عليهم طيء % و فصحوا ولم تلدهم نجد % 36(@)(@@) % كانوا الخيار وفرعت زائدا % % و النار تعلو وأبوها الزند . % 37(@)(@@) % يا مؤنسي بقربه سل وحشتي % % بعدك ما جر علي البعد . % 38(@)(@@) % أكل يوم للفراق فيكم % تعمد يسوءني أو قصد % 39(@)(@@) % ما بين أن يحبرني لقاؤكم % % حتى النوى فنعمة وجهد % 40(@)(@@) % و كيف لا وأنتم في نوبي % % يد وظهر وفم وعضد % PageV01P464 41(@)(@@) % ريش جناحي بكم مضاعف % و حبل باعي منكم ممتد % 42(@)(@@) % كم تحملون كلفي ثقيلة % كأن حملي ليس منه بد % 43(@)(@@) % مبتسمين والثرى معبس % بيض الوجوه والخطوب ربد % 44(@)(@@) % قد فضلتني سرفا ألطافكم % % فحسبكم . لكل شيء حد % 45(@)(@@) % أبقوا علي إنما إبقاؤكم % % ذخر ليوم حاجتي معد % 46(@)(@@) % شيبكم والنصفاء منكم % و الغر من شبابكم والمرد % 47(@)(@@) % في نجوة أيدي الخطوب دونها % % بتر وأجفان الليالي رمد % 48(@)(@@) % أراك فيها كل يوم لابسا % % ثوبا من النعماء يستجد % 49(@)(@@) % يزورك الشعر به في معرض % منشده يحسب طيبا يشدو % % 50(@)(@@) % و ربما أذكر ما أنساك من % % رسمي اتفاق ساءني لا عمد % PageV01P465 51(@)(@@) % سيفك في الأعداء لم خلفته % مجردا ليس عليه غمد % 52(@)(@@) % و كيف طبت أن يرى فريسة % نفسا وأيام الشتاء أسد % 53(@)(@@) % يحتشم النيروز من إطلاله % % و المهرجان يقتضيك بعد % PageV01P466 البحر : - 1(@)(@@) % خليلك من صفا لك في البعاد % % و جارك من أذك على الوداد % 2(@)(@@) % و حظك من صديقك أن تراه % % عدوا في هواك لمن تعادى 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms143# % % 3(@)(@@) % و رب أخ قصي العرق فيه % % سلو عن أخيك من الولاد % 4(@)(@@) % فلا تغررك ألسنة رطاب % بطائنهن أكباد صوادي % % 5(@)(@@) % و عش إما قرين أخ وفي % أمين الغيب أو عيش الوحاد % 6(@)(@@) % فإني بعد تجربتي لأمر % أنست ولا أغشك بإنفرادي % % 7(@)(@@) % تريد خلائق الأيام مكرا % % لتغضبني على خلقي وعادي % % 8(@)(@@) % و تغمرني الخطوب تظن أني % % ألين على عرائكها الشداد % 9(@)(@@) % و ما ثهلان تشرف قنتاه % % بأحمل للنوائب من فؤادي % % 10(@)(@@) % تغرب في تقلبها الليالي % % علي بكل طارقة ناد % PageV01P467 11(@)(@@) % إذا قلت آكتفت مني وكتفت % نزت بالداء ثائرة العداد % 12(@)(@@) % رعى سمن الحوادث في هزالي % % كأن صلاحهن على فسادي % % 13(@)(@@) % فيوما في الذخيرة من صديقي % % و يوما في الذخيرة من تلادي % % 14(@)(@@) % يذم النوم دون الحرص قوم % و قلت لرقدتي عنه حماد % 15(@)(@@) % و ما كان الغني إلا يسيرا % % لو أن الرزق يبعثه اجتهادي % % 16(@)(@@) % و ضاحكة إلى شعر غريب % شكمت به فأسلس من قيادي % % 17(@)(@@) % تعد سني تعجب من بياضي % % و أعجب منه لو علمت سوادي % % 18(@)(@@) % أمان كل يوم في انتقاص % يساوقهن هم في ازدياد % % 19(@)(@@) % و فرقة صاحب قلق المطايا % % به قلق المدامع والوساد % 20(@)(@@) % تخفض بعده الأيام صوتي % % على لسني وتخفض من عمادي % % PageV01P468 21(@)(@@) % و تخمد عن ضيوف الأنس ناري % % و كنت بقربه واري الزناد % 22(@)(@@) % أقيم ولم أقم عنه لمسل % و يرحل لم يسر مني بزاد % 23(@)(@@) % كأنا إذ خلقنا للتصافي % % خلقنا للقطيعة والبعاد % 24(@)(@@) % أرى قلبي يطيش إذا المطايا % % إلى الرابين ياسرهن حادي % % 25(@)(@@) % و لم احسب دجيلا من مياهي % % و لا أن المطيرة من بلادي % % 26(@)(@@) % و لا أني أبيت دعامي يحدو % % إلى تكريت سارية الغوادي % % 27(@)(@@) % و من صعداء أنفاسي شرار % % تمر مع الجنوب بها تنادي % % 28(@)(@@) % أأحبابي أثار البين بيني % % و بينكم مساخطة الأعادي % % 29(@)(@@) % سقت أخلاقكم عهدي لديكم % % فهن به أبر من العهاد % 30(@)(@@) % ورد على عندكم زمان % مجود الروض مشكور المراد % PageV01P469 31(@)(@@) % أصابت طيب عيشي فيه عيني % % فقد جازيتها هجر الرقاد % 32(@)(@@) % فلا تحسب وظنك في خيرا % % بقاي وأنت ناء من مرادي % % 33(@)(@@) % و لا أني يسر سواد عيني % % بما عوضت من هذا السواد % 34(@)(@@) % و كيف وما تلف المجد دار 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms144# % نأتك ولا يضم الفضل نادي % % 35(@)(@@) % فإن أصبر ولم أصبر رجوعا % % إلى جلد ولم أحمل بآد % 36(@)(@@) % فقد تحنى الضلوع على سقام % و قد تغضى الجفون على سهاد % 37(@)(@@) % و كنت وبيننا إن طال ميل % و إما عرض دجلة وهي وادي % % 38(@)(@@) % إذا راوحت دارك لج شوقي % % فلم يقنعه إلا أن أغادي % % 39(@)(@@) % فكيف وبيننا للأرض فرج % يماطل طوله عنق الجياد % 40(@)(@@) % و معترض الجزيرة والخوافي % % من القاطول تلمع والبوادي % % PageV01P470 41(@)(@@) % وفود من مطايا الماء سود % روادفها تطول على الهوادي % % 42(@)(@@) % إذا كن الليالي مقمرات % فراكبهن يخبط في الدآدي % % 43(@)(@@) % لهن من الرياح الهوج حاد % و من خلج المياه العوج هادي % % 44(@)(@@) % إذا قمصت على الأمواج خيلت % على الأحشاء تقمص أو فؤادي % % 45(@)(@@) % فهل لي أن أراك وأن تراني % % و هل من عدتي هي أو عتادي % % 46(@)(@@) % سأنتظر الزمان لها ويوما % % يطيل يد الصديق على المعادي % % 47(@)(@@) % ظمئنا بعدكم أسفا وشوقا % % كما جيدت بكم يبس البلاد % 48(@)(@@) % لعل محمدا ذكرته نعمى % % تراني ناسيا فيه اعتقادي % % 49(@)(@@) % و عل الله يجبر بالتداني % % كسيرة قانط حسب التمادي % % 50(@)(@@) % و أقرب ما رجوت الأمر فيه % % على الله اعتمادك واعتمادي % % PageV01P471 51(@)(@@) % فلا تعدم ولا يعدمك خلآ % % متى ما تعده عنك العوادي % % 52(@)(@@) % يزرك كرائما متكفلات % بجمع الأنس قيل له بداد % 53(@)(@@) % نواحب في التعازي والتشاكي % % حبائب للتهاني والتهادي % % 54(@)(@@) % طوالع في سواد الهم بيضا % طلوع المكرمات أو الأيادي % % 55(@)(@@) % إذا جرت ذلاذلها بجو % تضوع حاضر منه وبادي % % 56(@)(@@) % لها فعل الدروع عليك صونا % % و في الأعداء أفعال الصعاد % 57(@)(@@) % ربت يا آل أيوب وأتت % % رباي بكم على السنة الجماد % 58(@)(@@) % فهل رجل يدل إذا عدمتم % % على رجل وفي أو جواد % 59(@)(@@) % و من أخذ المحاسن عن سواكم % % كمن أخذ المناسب عن زياد % PageV01P472 البحر : - 1(@)(@@) % سلمت وما الديار بسالمات % على عنت البلى يا دار هند % % 2(@)(@@) % و لا برحت مفوفة الغوادي % % تصيب رباك من خطإ وعمد % 3(@)(@@) % بموقظة الثرى والترب هاد % و مجدية الحيا والعام مكدي % % 4(@)(@@) % على أني متى مطرتك عيني % % ففضل ما سقاك الغيث بعدي % % 5(@)(@@) % أميل إليك يجذبني فؤادي % % و غيرك ما استقام السير قصدي % % 6(@)(@@) % و أشفق أن تبدلك المطايا % % بوطأتها كأن 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms145# ثراك خدي % % 7(@)(@@) % أرى بك ما أراه فمستعير % حشاي وواجد بالبين وجدي % % 8(@)(@@) % و ليتك إذ نحلت نحول جسمي % % بقيت على النحول بقاء عهدي % % 9(@)(@@) % و ما أهلوك يوم خلوت منهم % % بأول غدرة للدهر عندي % % 10(@)(@@) % سلي الأيام ما فعلت بأنسي % % و عيش لي على البيضاء رغد % PageV01P473 11(@)(@@) % و في الأحداج عن رشإ حبيب % على لونيه من صلة وصد % 12(@)(@@) % يماطل ثم ينجز كل دين % و لم ينجز بذي العلمين وعدي % % 13(@)(@@) % تبسم بالبراق وصاب غيث % % فلو ملك الفداء لكنت أفدي % % 14(@)(@@) % ثناياه وفاه ولا أغالي % % بما في المزن من برق وبرد % 15(@)(@@) % ألا من عائد بياض يوم % لعيني بين أحناء و صمد % 16(@)(@@) % و عين بالطويلع بارزات % على قسماتهن حياء نجد % % 17(@)(@@) % نظرن فما غزالته بلحظ % و مسن فما أراكته بقد % 18(@)(@@) % و بلهاء الصبا تبغي سقاطي % % إذا حللتها هزلت بجدي % % 19(@)(@@) % تعد سني تعجب من وقاري % % و لم يجتز مراح العمر عدي % % 20(@)(@@) % فما للشيب شد على ركضا % % فطوح بي ولم أبلغ أشدي % % PageV01P474 21(@)(@@) % يعيرني ولم أره شآني % % تنبه حظه بخمول جدي % % 22(@)(@@) % و ود على غضارة حلتيه % مكان الرقع من أسمال بردى % % 23(@)(@@) % و ما ورق الغنى المنفوض عني % % بمعر من حسام المجد غمدي % % 24(@)(@@) % حملت وليس عن جلد بقلبي % % حمولة واسع الجنبين جلد % 25(@)(@@) % تبادهني النوائب مستغرا % % فأدفعها بعزمة مستعد % 26(@)(@@) % يزل الحوف عن سكنات قلبي % % زليل الماء عن صفحات جلدي % % 27(@)(@@) % دع الدنيا ترف على بنيها % % و تجلب بالجفاء علي وحدي % % 28(@)(@@) % وفر أموالهم تنمو وتزكو % % فليس كنوزها ثمنا لحمدي % % 29(@)(@@) % لعل حوائل الآمال فيهم % % تطرق من أبي سعد بسعد % 30(@)(@@) % فتى عقدت تمائمه فطيما % % على أكرومة ووفاء عقد % PageV01P475 31(@)(@@) % و ربته على خلق المعالي % % غرائز من أب عال وجد % 32(@)(@@) % فما مجت له أذن سؤالا % % و لا سمحت له شفة برد % 33(@)(@@) % إذا اخضرت بنان أب كريم % % فصبغتها إلى الأبناء تعدي % % 34(@)(@@) % تطاول للكمال فلم يفته % على قرب الولاد مكان بعد % 35(@)(@@) % و تم فعلق الأبصار بدرا % % و لم يعلق له شعر بخد % 36(@)(@@) % رآه أبوه وابن الليث شبل % % لسدة ثغرة وهو ابن مهد % 37(@)(@@) % فقال لحاسديه شقيتم بي % % و هذا ابني به تشقون بعدي 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms146# % % 38(@)(@@) % جرى ولداته فمضى وكدوا % % لو أن الريح مدركة بكد % 39(@)(@@) % إذا سبروه عن عوصاء أدلى % بها فنجا على غرر التحدي % % 40(@)(@@) % دعوا درج الفضائل مزلقات % لماض بالفضائل مستبد % PageV01P476 41(@)(@@) % و ما حسد النجوم على المعالي % % و لو ذاب الحصا حسدا بمجدي % % 42(@)(@@) % أبا سعد ولو عثروا بعيب % مشوا فيه بحق أو تعدى % % 43(@)(@@) % و قد تسري العيوب على التصافي % % فكيف بها على حنق وحقد % 44(@)(@@) % و لكن فتهم فنجوت منهم % % نجاء اللحن بالخصم الألد % 45(@)(@@) % و ملكك الفخار فلم تنازع % % بقل في الندى ولا بحشد % 46(@)(@@) % أب لك يحلم العلياء طولا % % و خال في عراص المجد يسدي % % 47(@)(@@) % و لم يعدل أبا لك يعربيا % زميل مثل خالك في معد % 48(@)(@@) % جزيتك عن وفائك لي ثناء % يود أخي مكانك فيه عندي % % 49(@)(@@) % و لولا الود عز عليك مدحي % % و لولا الفضل عز عليك ودي % % 50(@)(@@) % بني عبد الرحيم بكم تعالت % % يدي وورى على الظلماء زندي % % PageV01P477 51(@)(@@) % و إن أودى بنيسابور قومي % % فجدكم من الأملاك جدي % % 52(@)(@@) % و أصدق ما محضت القوم مدحي % % إذا ما كان مجد القوم مجدي % % 53(@)(@@) % تفاعيني لترديني الليالي % % فأذكركم فتنهسني بدرد % 54(@)(@@) % و أزحم فيكم نكبات دهري % % بعصبة غالب وبني الأشد % 55(@)(@@) % لذلك ما حبوتكم صفايا % % ذخائر خير ما أحبو وأهدي % % 56(@)(@@) % طوالع من حجاب القلب عفوي % % بهن يبذ غاية كل جهد % % 57(@)(@@) % تجوب الأرض تقطع كل يوم % % مدى عامين للساري المجد % 58(@)(@@) % يرين وبعد لم يروين حسنا % % كأن سطورهن وشوع برد % 59(@)(@@) % إذا روت رجالكم كهولا % % سأرن لصبية منكم ومرد % 60(@)(@@) % و لولاكم لما ظفرت بكفء % يسر ولا سعت قدما لرشد % PageV01P478 61(@)(@@) % و لكن زفها الأحرار منكم % % فما اشقيت حرتها بعبد % 62(@)(@@) % فضلتم سؤددا وفضلت قولا % % فكل في مداه بغير ند % 63(@)(@@) % بكم ختم الندى وبي القوافي % % بقيتم وحدكم وبقيت وحدي % % PageV01P479 البحر : - 1(@)(@@) % تظن ليالينا عودا % % على العهد من برقتي ثهمدا % % 2(@)(@@) % و هل خبر الطيف من بعدهم % % إذا طاب يصدقك الموعدا % % 3(@)(@@) % و يا صاحبي أين وجه الصباح % % و أين غد صف لعيني غدا % % 4(@)(@@) % أسدوا مسارح ليل العرا % % ق أم صبغوا فجره أسودا % % 5(@)(@@) % و خلف الضلوع وفير أبي % % و قد برد الليل أن 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms147# يبردا % % 6(@)(@@) % خليلي لي حاجة ما أخف % برامة لو حملت مسعدا % % 7(@)(@@) % أريد لتكتم وابن الأرا % % ك يفضحها كلما غردا % % 8(@)(@@) % و بالرمل سارقة المقلتي % % ن تكحل أجفانها المرودا % % 9(@)(@@) % إذا هصرت هصرت بانة % و إن سئلت سئلت جلمدا % % 10(@)(@@) % أحب وإن أخصب الحاضرون % % ببادية الرمل أن أخلدا % % PageV01P480 11(@)(@@) % و أهوى الظباء لأم البنين % بما تشبه الرشأ الأغيدا % % 12(@)(@@) % و عينا يردن لصاب الغوير % % بأنقع من مائه للصدى % % 13(@)(@@) % فليت وشيبي بحام العذار % زمان الغضا عاد لي أمردا % % 14(@)(@@) % و يا قلب قبلك ضل القلو % % ب لو كنت أملك أن تنشدا % % 15(@)(@@) % أرى كبدي قسمت شقتين % مع الشوق غور أو أنجدا % % 16(@)(@@) % فبالنعف ضائعة شعبة % و أخرى بميسان ما أبعدا % % 17(@)(@@) % و ما خلت لي واسطا عقلة % تعلم نومي أن يشردا % % 18(@)(@@) % و لا أنني أستشم الجنو % % ب أطيب ريحي أو بردا % % 19(@)(@@) % و أطرح منحدرا ناظري % % لها أبتغي رفدها المصعدا % % 20(@)(@@) % و أحمد من نشرها أنه % % إذا هب مثل لي أحمدا % % PageV01P481 21(@)(@@) % و لا كنت قبلك في حاجة % لتحمل عنقي لريح يدا % % 22(@)(@@) % أسالك دجلة تجري به % % محايدة موجها المزبدا % % 23(@)(@@) % صهابية اللون قارية % تخالف صبغتها المولدا % % 24(@)(@@) % تحن وما سمعت في الظلا % % م غير غناء النواتي حدا % % 25(@)(@@) % لها رسن في يمين الشمال % % إذا ضل قائف أرض هدى % % 26(@)(@@) % تحمل سلمت على المهلكات % و ساق لك الله أن ترشدا % % 27(@)(@@) % رسائل عني تقيم الجموح % و تستعطف العنق الأصيدا % % 28(@)(@@) % أجيراننا أمس جار الفرا % % ق بيني وبينكم واعتدى % % 29(@)(@@) % جفا المضجع السبط جنبي لكم % % محافظة ونفى المرقدا % % 30(@)(@@) % و أوحشتم ربع أنسي فعاد % % يهدم بانيه ما شيدا % % PageV01P482 31(@)(@@) % و فاجأني بينكم بغتة % و لم أك للبين مستعددا % % 32(@)(@@) % ففي جسدي ليس في جبتي % % نوافذ ما سل أو سددا % % 33(@)(@@) % تمتنك عيني وقلبي يراك % % بشوقي حاشاك أن تفقدا % % 34(@)(@@) % كأني سرعة ما فتني % % عدمتك من قبل أن توجدا % % 35(@)(@@) % لئن نازعتني يد الملك فيك % % فلم أستطع بدفاع يدا % % 36(@)(@@) % فحظ عساه وإن ساءني % % يكون بما سرني أعودا % % 37(@)(@@) % دعوك لتعدل ميل الزمان % و يصلح رأيك ما أفسدا % % 38(@)(@@) % يسومون كفك سبر الجراح % % و قد أخذت في العظام المدى % % 39(@)(@@) % سيبصر مستقربا من دعا % % ك 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms148# موضع تفريطه مبعدا % % 40(@)(@@) % و يعلم كيف انجفال الخطوب % % إذا سل منك الذي أغمدا % % PageV01P483 41(@)(@@) % و إن كان منكبه منجبا % % درى أي صمصامة قلدا % % 42(@)(@@) % و قبلك لو أثلث الفرقدي % % ن خابط عشوائهم ما اهتدى % % 43(@)(@@) % و لما رأوك أمام الرعي % % ل ألقوا إلى عنقك المقودا % % 44(@)(@@) % و أدنوا لحمل المهمات من % % ك بزلاء عجلزة جلعدا % % 45(@)(@@) % إذا ثقل الحمل قامت به % % و إن ظلعت نهضت أجلدا % % 46(@)(@@) % تكون لراكبها ما استقا % % م دون خطار الفيافي فدى % % 47(@)(@@) % و تضحى على الخمس لا تستري % % ب عجرفة أن ترى الموردا % % 48(@)(@@) % تطيع اللسان فإن عوسرت % أثاروا بها الأسد الملبدا % % 49(@)(@@) % إذا ما الفتى لم تجد نفسه % % بهمتها في العلا مصعدا % % 50(@)(@@) % سوى غلط الحظ أو أن يع % % ذ في قومه نسبا قعددا % % PageV01P484 51(@)(@@) % فلله أنت ابن نفس سمت % لغايتها قبل أن تولدا % % 52(@)(@@) % إذا خير اختار إحدى اثنتي % % ن إما العلاء وإما الردى % % 53(@)(@@) % كأني أراك وقد زاحموا % % بك الشمس إذ عزلوا الفرقدا % % 54(@)(@@) % و خاطوا النجوم قميصا عليك % % و لاثوا السحاب مكان الردا % % 55(@)(@@) % و صانوك عن خرق في الحلي % % فحلوا طلي خيلك المسجدا % % 56(@)(@@) % و إن أخلق الدهر ألقابهم % % بما كثر منها وما رددا % % 57(@)(@@) % رضوا باختياري أن أصطفي % % لك اللقب الصادق المفردا % % 58(@)(@@) % فكنيت نفسك أم العلاء % % و سميت كفك قطر الندى % % 59(@)(@@) % و هل سمعوا في اختلاف اللغات % % بلجة بحر تسمى يدا % % 60(@)(@@) % منى فيك بلت يدي منذ شم % % ت عارضها المبرق المرعدا % % PageV01P485 61(@)(@@) % فتم فراغ عهودي فقد % % أمنتك من قبل أن تعهدا % % 62(@)(@@) % فلا ترمين بحقي ورا % % ء ظهر النسيئة ملقى سدى % % 63(@)(@@) % و لا يشغلنك عز الولا % % ة عن حرماتي وبعد المدى % % 64(@)(@@) % فليس الوفي المراعى القريب % و لكنه من رعى الأبعدا % % 65(@)(@@) % تحليت طعمة عيشي المري % % ر يوم لقيتك مسترغدا % % 66(@)(@@) % و أيقنت أن زماني يص % % ير عبدي مذ صرت لي سيدا % % 67(@)(@@) % و أصبح من كان يقوى علي % و غايته في أن يحسدا % % 68(@)(@@) % و قد كنت أصعب من أن أصا % % د رأسا وأعوز أن أوجدا % % 69(@)(@@) % إذا استام ودي أو مدحتي % % فتى رام أخنس مستطردا % % 70(@)(@@) % يفالت قطعا حبال القنيص % % يرى كل موطنه 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms149# مشردا % % PageV01P486 71(@)(@@) % فآنستني بمديح الرجال % % و ذللتني لقبول الجدا % % 72(@)(@@) % و لو راض خلقك لؤم الزمان % % لعلمه المجد والسؤددا % % 73(@)(@@) % فما أمكن القول فاسمع أزرك % % قوافي بادئة عودا % % 74(@)(@@) % قواضي حق الندى والودا % % دمثني تؤمك أو موحدا % % 75(@)(@@) % إذا أكل الدهر أعواضها % % من المال عمرها سرمدا % % 76(@)(@@) % لو اسطاع سامع أبياتها % % إذا قام راو بها منشدا % % 77(@)(@@) % لصير أبياتها سبحة % و مثل قرطاسها مسجدا % % 78(@)(@@) % مهنئة أبدا من علاك % % بما استأنف الحظ أو جددا % % 79(@)(@@) % و بالصوم والعيد حتى تكو % % ن آخر من صام أو عيدا % % 80(@)(@@) % و حتى ترى واحدا باقيا % % كما كنت في دهرنا أوحدا % % PageV01P487 البحر : - 1(@)(@@) % أخلق الدهر لمتي وأجدا % % شعرات أرينني الأمر جدا % % 2(@)(@@) % لم يزل بي واشي الليالي إلى سم % % ع معير الشباب حتى استردا % % 3(@)(@@) % صبغة كانت الحياة فما أف % % رق أودي دهري بها أو أردى % % 4(@)(@@) % يا بياض المشيب بعني بأيا % % مك ليلا نضوته مسودا % % 5(@)(@@) % يا لها سرحة تصاوح تنو % % ما وعهدي بها تفاوح رندا % % 6(@)(@@) % لم أقل قبلها لسوداء عطفا % و اقترابا ولا لبيضاء بعدا % % 7(@)(@@) % عدت الأربعون سن تمامي % % و هي حلت عراي عقدا فعقدا % % 8(@)(@@) % بان نقصي بأن كملت وأحسس % % ت بضعفي لما بلغت الأشدا % % 9(@)(@@) % رجعت عني العيون كما تر % % جع عن حاجب الغزالة رمدا % % 10(@)(@@) % ليت بيتا بالخيف أمس استضفنا % % ه قرانا ولو غراما ووجدا % % PageV01P488 11(@)(@@) % و سقاة على القليب احتسابا % % عوضونا اللمى شفاء وبردا % % 12(@)(@@) % راح صحبي بفوزة الحج يحدو % % ن وعنسي باسم البخيلة تحدى % % 13(@)(@@) % و لحاظي مقيدات بسلع % فكأني أضللت فيه المجدا % % 14(@)(@@) % رب ليل بين المحصب و الخي % % ف لبسناه للخلاعة بردا % % 15(@)(@@) % و خيام بسفح أحد على الأق % % مار تبنى فحي يا رب أحدا % % 16(@)(@@) % لا عدا الروح في تهامة أنفا % % سا إذا استروحت تمنيت نجدا % % 17(@)(@@) % و أعان الرقاد حيرة طرف % لم يجد في الطلاب يقظان رشدا % % 18(@)(@@) % نمت أرجو هندا فكل مثال % خيلت لي الأحلام إلا هندا % % 19(@)(@@) % عجبا لي ولابتغائي مودا % % ت ليال طباعها لي أعدا % % 20(@)(@@) % نطقت في نفوسها وتعفف % % ت فما ود من يرى بك صدا % % PageV01P489 21(@)(@@) % أجلبت عريكة دهري % % فرمى بي وقام أملس جلدا % % 22(@)(@@) % كل يوم أقول 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms150# ذما لعيشي % % فإذا فاتني غدا قلت حمدا % % 23(@)(@@) % زفرات على الزمان إذا استب % % ردت منها تنفسا زدن وقدا % % 24(@)(@@) % يا لحظي الأعمى أما يتلقى % % قائدا يبتغي الثواب فيهدي . % 25(@)(@@) % يا زمان النفاق ما لك زاد الله % بيني وبين أهلك بعدا % % 26(@)(@@) % من عذيري من صحبة الناس ما أخ % % فرها ذمة وأخبث عهدا % % 27(@)(@@) % كم أخ حائم معي واصل لي % % فإذا خلفت به الحال صدا % % 28(@)(@@) % و صديق سبط وايامه وس % % طى فلما انتهت تقلص جعدا % % 29(@)(@@) % ليته غير منصف لي إسعا % % دا على الدهر منصف لي ودا % % 30(@)(@@) % و إذا لم تجد من الصبر بدا % % فتعزل وجد من الناس بدا % % PageV01P490 31(@)(@@) % يدفع الله لي ويحمي عن الصا % % حب فردا كما وفى لي فردا % % 32(@)(@@) % أجنت أوجه الرجال فما أن % % كرت من بشر وجهه العذب وردا % % 33(@)(@@) % كيفما خالفت عطاش أماني % % نا إليه كان النمير العدا % % 34(@)(@@) % ملك الجود أمره فحديث ال % % مال عن راحتيه أعطى وأجدى % % 35(@)(@@) % زذ لجاجا إذا سألت وإلحا % % حا عليه يزدك صبرا ورفدا % % 36(@)(@@) % لا ترى والمياه تعطي وتكدي % % حافرا قط في ثراه أكدي % % 37(@)(@@) % كلما عرضت له رغبة الدن % % يا تواني عنها عفافا وزهدا % % 38(@)(@@) % كثر الناس مالها واقتناها % % سيرا تشرف الحديث وحمدا % % 39(@)(@@) % لحقته بغاية المجد نفس % لم تحدد فضلا فتبلغ حدا % % 40(@)(@@) % عدت الفقر في المكارم ملكا % % و فناء الأيام في العز خلدا % % PageV01P491 41(@)(@@) % و أب حط في السماء ولو شا % % ء تخطى مكانها وتعدى % % 42(@)(@@) % من بهاليل أنبتوا ريشة الأر % % ض وربوا عظامها والجلدا % % 43(@)(@@) % أرضعتها أيديهم درة الخص % % ب فروت تلاعها والوهدا % % 44(@)(@@) % بين جم منهمو سابور أقيا % % ل يعدون مولد الدهر عدا % % 45(@)(@@) % لهم حاضر الممالك إن فا % % خر قوم منها بقفر ومبدى % % 46(@)(@@) % أخذوا عذرة الزمان وسدوا % % فرج الغيل يقنصون الأسدا % % 47(@)(@@) % سير العدل في مآثرهم تر % % وى وحسن التدبير عنهم يؤدي % % 48(@)(@@) % و إذا اغبرت السنون وأبدى % % شعث الأرض وجهها المربدا % % 49(@)(@@) % طردوا الأزل بالثراء وقاموا % % أثر المحل يخلفون الأندا % % 50(@)(@@) % توجوا مضغة وساد كهول ال % % ناس أبناؤهم شبابا ومردا % % PageV01P492 51(@)(@@) % عدد الدهر سيدا من % % هم وعد الحسين جدا فجدا % % 52(@)(@@) % حبس الناس أن يجاورك في السؤ % % دد 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms151# تعريجهم وسيرك قصدا % % 53(@)(@@) % و وقى الملك زلة الرأي أن صر % % ت بتدبير أمره مستبدا % % 54(@)(@@) % لك يوم عنه مراس مع الحر % % ب يرد السوابق الشعر جردا % % 55(@)(@@) % تركب الدهر فيه ظهرا إلى النص % % ر وتستصحب الليالي جندا % % 56(@)(@@) % و جدال يوما ترى منك فيه % % فقر الوافدين خصما ألدا % % 57(@)(@@) % كل عوصاء يسبق الكلم الهد % ار في شوطها الجواد النهدا % % 58(@)(@@) % أنا ذاك الحر الذي صيرته % % لك أخلاقك السواحر عبدا % % 59(@)(@@) % معلق من هواك كفى بحبل % لم يزده البعاد إلا عقدا % % 60(@)(@@) % ملك الشوق أمر قلبي عليه % % مذ غدا البين بيننا ممتدا % % PageV01P493 61(@)(@@) % أشتكي البعد وهو ظلم ولولا % % لذة القرب ما ألمت البعدا % % 62(@)(@@) % ليت من يحمل الضعيف على الأخ % % طار ألقى رحلي اليك وأدى % % 63(@)(@@) % فتروت عيني ولو ساعة من % % ك فإني من بعدها لا أصدى % % 64(@)(@@) % و على النأي فالقوافي تحيا % % تك مني تسري مراجا ومغدي % % 65(@)(@@) % كل عذراء تفضح الشمس في الصب % % ح وتوري في فحمة الليل زندا % % 66(@)(@@) % لم تدنس باللمس جسما ولم تص % % بغ لها غضة اللواحظ خدا % % 67(@)(@@) % أرجأت الأعطاف مهدى جناها % % لك يهدى إلى الربيع الوردا % % 68(@)(@@) % فتلق السلام والشوق منها % % ذاك يشكي وذا يطيب فيهدى % % 69(@)(@@) % و احب جيد النيروز منها بطوقي % % ن وفصل لليلة العيد عقدا % % 70(@)(@@) % و تسلم من الحوادث ما ك % % ر على عقبه الزمان وردا % % PageV01P494 71(@)(@@) % ما أبالي إذا وجدتك من تف % % قد عيني لا أبصرت لك فقدا % % PageV01P495 البحر : - 1(@)(@@) % إذا فطمت قرارة كل وادي % % فدرت باللوى حلم الغوادي % % 2(@)(@@) % و مرت تهتدي بالريح فيه % % مطايا الغيث مثقلة الهوادي % % 3(@)(@@) % ففتحت الربا خدا وسدت % % بشكر المزن أفواه الوهاد % 4(@)(@@) % اناديه وتنشده المغاني % % و لكن لا حياة لمن تنادى % % 5(@)(@@) % و ما أربي إلى سقيا ربوع % لها من مقلتي سار وغادي % % 6(@)(@@) % حملت يد السحاب الجون فيها % % و لست معودا حمل الأيادي % % 7(@)(@@) % و لو بكت السماء لها وجفني % % تيقنت البخيل من الجواد % 8(@)(@@) % ضممت بمسقط العلمين صحبي % % و قد صاح الكلال به بداد % 9(@)(@@) % على أرج الثرى لما ضللنا % % تضوع منه في الأنفاس هادي % % 10(@)(@@) % و قد سقط السرى والنجم هاو % عيون الركب في حط الرقاد % PageV01P496 11(@)(@@) % ندامى 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms152# صبوة دارت عليهم % % بأيدي العيس أكواب السهاد % 12(@)(@@) % إذا شربوا السرى اقترحوا عليه % % صفير حمامة وغناء حادي % % 13(@)(@@) % و لما عز ماء الركب فيهم % % وقفت أحل من عيني مزادي % % 14(@)(@@) % تحوم وقد تقلصت الأداوي % % على أجفاني الأبل الصوادي % % 15(@)(@@) % أجدك هل ترى بذيول سلمى % % نضارة حاضر وخيام بادي % % 16(@)(@@) % خرقن لكل عين في سواد ال % % خدور خصاصة مثل السواد % 17(@)(@@) % و ما أتبعت ظعن الحي طرفي % % لأغنم نظرة فتكون زادي % % 18(@)(@@) % و لكني بعثت بلحظ عيني % % وراء الركب يسأل عن فؤادي % % 19(@)(@@) % و في نوام هذا الليل شمس % و في سهري لها وجفا وسادي % % 20(@)(@@) % إذا ذكرت نزت كبدي إليها % % هبوب الداء نبه بالعداد % PageV01P497 21(@)(@@) % عجبت يضميني زمني وأرضى % % و يحصدني ولم أبلغ حصادي % % 22(@)(@@) % و تنفق مسرفات من شبابي % % لياليه الصعاب بلا اقتصاد % 23(@)(@@) % و عهدي بالتشابه والتنافي % % يجران التصادق والتعادي % % 24(@)(@@) % فما بال الليالي وهي سود % يزال بها البياض من السواد % 25(@)(@@) % توق الناس إن الداء يعدى % % و إن قربوا فحظك في البعاد % 26(@)(@@) % و لا يغررك ذو ملق يغطى % % أذاه وجمره تحت الرماد % 27(@)(@@) % كلا أخويك ذو رحم ولكن % % أخوك أخوك في النوب الشداد % 28(@)(@@) % عذيري من صديق الوجه يحنى % % أضالعه على قلب مضادي % % 29(@)(@@) % لوي يده على حبل لعنقي % % و قال اضمم يديك على ودادي % % 30(@)(@@) % تمنى وهو ينقصني تمامي % % و أين الزبرقان من الدآدي % % PageV01P498 31(@)(@@) % و مجتمعين يرتفدون عيبي % % فلا يزن اجتماعتهم انفرادي % % 32(@)(@@) % إذا انتسبوا لفضل لم يزيدوا % % على نسب ابن حرب من زياد % 33(@)(@@) % ألام على عزوف النفس ظلما % % و ما لومي على خلقي وعادي % % 34(@)(@@) % و يخدعني البخيل يريد ذمي % % و هل عند الهشيمة من مراد % 35(@)(@@) % كفاني آل إسماعيل إني % % بلغت بهم من الدنيا مرادي % % 36(@)(@@) % و أن محمدا داري نفاري % % فلان له وأسلس من قيادي % % 37(@)(@@) % رقى خلقي بأخلاق كرام % ألانت من عرائكه الشداد % 38(@)(@@) % و كنت أذم شر الناس قدما % % و عيبهم فصح على انتقادي % % 39(@)(@@) % و كم خابطت عشواء الأماني % % و كاذبني على الظن ارتيادي % % 40(@)(@@) % فلما أن سللت على الدياجي % % ربيب النعمة استذكى زنادي % % PageV01P499 41(@)(@@) % و أنبض من يديه لي غديرا % % و قد أعيا فمي مص الثماد 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms153# % 42(@)(@@) % جلا لي غرة رويت جمالا % % أسر بها ووجه البدر صادي % % 43(@)(@@) % تفاديها السماء بنيريها % % فتعرف حظها فيما تفادى % % 44(@)(@@) % من الوافين أحلاما وصبرا % % إذا الجلي هفت بحلوم عاد % 45(@)(@@) % بني البيض الخفاف توارثوها % % مع الأحساب والخيل الوراد % 46(@)(@@) % تضاحك في أكفهم العطايا % % و تكلح عنهم يوم الجلاد % 47(@)(@@) % مطاعيم إذا النكباء قرت % % وجب القحط أسمة البلاد % 48(@)(@@) % لهم أيد إذا سئلوا سباط % موصلة بأسياف جعاد % 49(@)(@@) % إذا كلت من الضرب المواضي % % أعانوها بأفئدة حداد % 50(@)(@@) % طووا سلف الفخار فلم توصم % طوارفهم بمعروف التلاد % PageV01P500 51(@)(@@) % إذا الأحساب طأطأت استشاطوا % % على متمرد الشرفات عادي % % 52(@)(@@) % يعد المجد واحدهم بألف % من النجباء في قيم البلاد % 53(@)(@@) % إذا ولدوا فتى سعت المعالي % % تباشر بينها بالإزدياد % 54(@)(@@) % نموك أغر من ملك أغر % جوادا بالكرائم من جواد % 55(@)(@@) % أخا طعمين حلوك للموالي % % بلا من ومرك للمعادي % % 56(@)(@@) % إذا لم يختضب لك غرب سيف % دما خضبت سيفا بالمداد % 57(@)(@@) % فأنت إذا ركبت شهاب حرب % و أنت إذا جلست شهاب نادي % % 58(@)(@@) % إذا رجع الحسيب إلى فخار % قديم أو حديث مستفاد % 59(@)(@@) % فحسبك بالموفق من فخار % و بيت الباهلية من عتاد % 60(@)(@@) % و من يسند إلى طرفيك مجدا % % يبت من جانبيه في مهاد % PageV01P501 61(@)(@@) % فداؤك دائر الأبيات يأوى % % إلى وقصاء لاطئة العماد % 62(@)(@@) % يتوب إذا هفا غلطا بجود % و لم يتب اتقاء للمعاد % 63(@)(@@) % إذا جاراك في مضمار فضل % عدته عن اللحاق بك العوادي % % 64(@)(@@) % إليك سرت مطامعنا فعادت % % مواقر من ندى لك مستعاد % 65(@)(@@) % يخدن فصائلا فيدعن وسما % لأرجلهن في الصم الصلاد % 66(@)(@@) % يقادحن الحصى شررا كأنا % % حذوناها مناسم من زناد % 67(@)(@@) % حملن إليك من تحف القوافي % % غرائب من مثان أو وحاد % 68(@)(@@) % هدايا تفخر الأسماع فيها % % على الأبصار أيام التهادي % % 69(@)(@@) % مخلصة من الكلم المعنى % % بطول الكر والمعنى المعاد % 70(@)(@@) % نوافث في عقود السحر تنمى % % فصاحتها إلى رمل العقاد % PageV01P502 71(@)(@@) % تمنى وهي تنظم فيك أن لو % % تكون ترائبا مهج الأعادي % % 72(@)(@@) % تخال العرب عجرا عن مداها % % نبيط العرب لم تنطق بضاد % 73(@)(@@) % لأيام البشائر والتهاني % % بها نشر الروائح والغوادي % % 74(@)(@@) % يجرر ذيلها يوم شريف % فيجعلها على عيد معاد % 75(@)(@@) % شواهد أن جدك في ارتقاء ال % % سعود وأن عمرك في 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms154# امتداد % 76(@)(@@) % كفاها منك عفوك في العطاء ال % % جزيل وقد وفت لك باجتهادي % % 77(@)(@@) % فكيف خلطتني بسواي فيما % % أنلت وأنت تشهد باتحادي % % 78(@)(@@) % تمادى بي جفاؤك ثم جاءت % % مواصلة أعق من التمادي % % 79(@)(@@) % ألم تك لي من الذهب المصفى % % يد بيضاء تشرق في الأيادي % % 80(@)(@@) % منوهة إذا انتشرت بذكرى % % و لائقة بمجدك واعتقادي % % PageV01P503 81(@)(@@) % رضائي أن تهزك ريح شوق % إلى قربي ويوحشك افتقادي % % 82(@)(@@) % إذا ما لم يكن نيلا شريفا % % فحسبي من صلاتك بالوداد % PageV01P504 البحر : - 1(@)(@@) % نبهته فقام مشبوح العضد % أغلب لوسيم الهوان ما رقد % 2(@)(@@) % في يده مذروبة مزيدة % و درعه سابغة من اللبد % 3(@)(@@) % إذا غدا لم يحتشم هاجرة % و إن سرى لم يخ من ليل برد % 4(@)(@@) % إن هم لم يحبس على مشورة % و إن غدا لسفر لم يستعد % 5(@)(@@) % لكل باغي قنص طريدة % تنفر منه وله كل الطرد % 6(@)(@@) % هب بلبيك وقد دعوته % % مكتفيا بقوله إلى الأبد % 7(@)(@@) % و خير من ساند ظهري أسد % أو رجل في صدره قلب أسد % 8(@)(@@) % و قال في لهاة أي خطر % تقذف بي وعرض ما أي بلد % 9(@)(@@) % و ما الذي رابك قلت حاجة % في أفق المجد فقام فصعد % 10(@)(@@) % يسبقني سعيا لما أريده % % حتى لقد أدرك بي ما لم أرد % PageV01P505 11(@)(@@) % فردين إلا صارمين اعتنقا % % و ضامرين وردا أين قدد % 12(@)(@@) % تضمر أحشاء الدياجي والفلا % % منى ومنه جسدين بجسد % 13(@)(@@) % كأن إثرينا إذا ما أصبحا % % على الثرى مسحب رمح أو مسد % 14(@)(@@) % حتى بلغت مسرح العز به % % بأول الشوط وأقرب الأمد % 15(@)(@@) % و رب عزم قبلها ركبته % ففت أن أظلم أو أن أضطهد % % 16(@)(@@) % و غارة من الكلام شنها % % على اللئام كل معنى مطرد % 17(@)(@@) % شهدتها مغامرا وكنت بال % % حض عليها غائبا كمن شهد % 18(@)(@@) % و لذة صرفت وجهي كرما % % عنها وفيها رغبة لمن زهد % 19(@)(@@) % لم يعتلقني بأثام حبلها % % و لم ينلني عارها ولم يكد % 20(@)(@@) % و حلة طرقت من أبياتها % % أمنعها بابا وأعلاها عمد % PageV01P506 21(@)(@@) % و الحي إما خالف أو حاضر % خيط الكرى بجفنه قد انعقد % 22(@)(@@) % و ليس إلا بالنباح حرس % لهم وإلا مقلة النار رصد % 23(@)(@@) % فبت أستقري الحديث وحده % % و غيره لولا العفاف لي 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms155# معد % 24(@)(@@) % و دون إرهابي حد صارم % عانقته ومقول منه أحد % 25(@)(@@) % و كم بذات الرمل من نافرة % بغير أشراك الشباب لم تصد % 26(@)(@@) % أحسن من بذل هواها منعها % % و من وصال الغانيات ما تصد % 27(@)(@@) % نومي محفوظ إذا ما زرتها % % و موضعي إن غبت عنه مفتقد % 28(@)(@@) % يعجب قلبي مطلها لطول ما % % يكر بي المطل إليها ويرد % 29(@)(@@) % لله أحباب وفيت لهم % بما استحقوا من أسى ومن كمد % 30(@)(@@) % لم يكفهم شقوة عيني بعدهم % % حتى استعانوا بالدموع والسهد % PageV01P507 31(@)(@@) % مضوا بجمات الحياة معهم % % و عولوا بشفتى على الثمد % 32(@)(@@) % صحبت قوما بعدهم حبالهم % % سحيلة الفتل رخيات العقد % 33(@)(@@) % و ما على من كده حر الظما % % إذا رأى الماء الأجاج فورد % 34(@)(@@) % يضرب قوم في وجوه إبلي % % و قد كفاهم أنها عنهم حيد % 35(@)(@@) % لا تعجل الكوم إلى ذيادها % % فهي قماح عنكم لو لم تذد % 36(@)(@@) % ما للبخيل يتحامى جانبي % % متى رآني عاكفا على النقد % 37(@)(@@) % يستر عني القعب داف حنظلا % % فيه وقد أمر في في الشهد % 38(@)(@@) % ما أبصر الدهر بما أريده % % لو كان في الحكم علي يفتصد % 39(@)(@@) % أنولني منزلة بين الغني % % و الفقر لم يبخل بها ولم يجد % 40(@)(@@) % و شر أقسامك حظ وسط % أرعن لم تخمل به ولم تسد % PageV01P508 41(@)(@@) % أغرى الليالي بي أني عارف % بالسهل من أخلاقهن والنكد % 42(@)(@@) % و أنني أقدح في صروفها % % بعزمة تضيء لي على البعد % 43(@)(@@) % تطلعني على اليقين ظنتي % % كأن يومي مخبري بسر غد % 44(@)(@@) % يا بائعي مرتخصا بثمني % % سوف يذم مستعيض ما حمد % 45(@)(@@) % مثلي نضارا ضنت الكف به % % لو كان في الناس بصير ينتقد % 46(@)(@@) % قد فطنت لحظها مطالبي % % و أبصرت عيني الضلال والرشد % 47(@)(@@) % و قد علمت أي برق أمتري % % مزنته وأي بحر أستمد % 48(@)(@@) % و وسعت أيدي بني أيوب لي % % و بشرهم ملء المنى ما لا وود % 49(@)(@@) % فما أبالي وهم الباقون لي % % من ذا فنى في الناس أو من ذا نفد % 50(@)(@@) % و لا أروم الرزق من غيرهم % و إنما أطلب من حيث أجد % PageV01P509 51(@)(@@) % المانعون بالجوار والحمى % % و الناهضون بالعديد والعدد % 52(@)(@@) % و الغامرون المحل من جودهم % بكل كف ذاب في عام جمد 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms156# % 53(@)(@@) % و الضاربون في اليفاع والذرى % % إذا بيوت الذل عاذت بالوهد % 54(@)(@@) % تضيء تحت الليل أحسابهم % لضيفهم إن حاجب النار خمد % 55(@)(@@) % مدوا إلى الحاجات من ألسنهم % % ذوابلا منذ استقامت لم تمد % 56(@)(@@) % لا تتقيها هامة بمغفر % و لا يداريها عن الجسم الزرد % 57(@)(@@) % تبهر في الأسماع كل جائف % إذا استقامت لحمة الجرح فسد % 58(@)(@@) % تعرفوا بالمجد حتى سافرت % % أخبارهم بطيبه وهم قعد % 59(@)(@@) % و اختلفوا لا أخطأت بسهمها % % أمنية صوب نداهم تعتمد % 60(@)(@@) % و أفسدوا الدنيا على أبنائها % % فما ترى مثلهم فيمن تلد % PageV01P510 61(@)(@@) % هم ما هم أصلا ومن فروعهم % % أبلج أربي طارفا على التلد % 62(@)(@@) % و في بمجد قومه محمد % فبرهم وربما عق الولد % 63(@)(@@) % و بان من بينهم بهمة % خلة كل سؤدد منها تسد % 64(@)(@@) % تم وبدر التم بعد ناقص % و زاد والبحر المحيط لم يزد % 65(@)(@@) % و دبر الدنيا برأي واحد % يأنف أن يشركه فيها أحد % 66(@)(@@) % تراه وهو في الجميع واحدا % % و البدر في حفل النجوم منفرد % 67(@)(@@) % إذا استشار لم يزد بصيرة % و لا يلوم رأيه إذا استبد % 68(@)(@@) % حتى لقد أصبح باتحاده % % يتيمة الدهر وبيضة البلد % 69(@)(@@) % قام فنال المكرمات متعبا % % و فاز بالراحة مخفوض قعد % 70(@)(@@) % و خام عن حمل الحقوق معشر % فلم يرعه حملها ولم يؤد % % PageV01P511 71(@)(@@) % و لو درى النائم أي قدم % يحرزها الساهر لاشتاق السهد % 72(@)(@@) % و ربما برح بالعين الكرى % % و كانت الراحة داء للجسد % 73(@)(@@) % تسلمت من القذى أخلاقه % و الماء يقذى بالسقاء والزبد % 74(@)(@@) % و انتظم القلوب سلك وده % % فما يرى من لا يحب ويود % 75(@)(@@) % لا رفق الغيظ بقلب محفظ % عليك إن لم يقل الشعر اعتقد % 76(@)(@@) % جاراك يرجو أن يكون لاحقا % % سوم السحوق فات أن يجنى بيد % 77(@)(@@) % ينقاد للذلة طوع نسب % حيران في الأحساب أعمى لم يقد % 78(@)(@@) % يدين بالبخل إذا سيل فإن % % أخطأ يوما بنوال لم يعد % 79(@)(@@) % مد بحبل شره فانفصمت % % أسبابه وأنت بالخير تمد % 80(@)(@@) % فكلما جاز مدى جاوزته % % مقاربا للمجد من حيث بعد % PageV01P512 81(@)(@@) % بك اعتلقت ويدي وحشية % و ضم أنسي شمله وهو بدد % 82(@)(@@) % و ارتاض مني لك خلق قامص % لم يدر قبل ما العطاء والصفد % 83(@)(@@) % ملكت قلبي 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms157# شعفا فما وفى % % بقدر وجدي بك صبري والجلد % 84(@)(@@) % حتى حواني أولا فأولا % % و واحد أول ألف في العدد % 85(@)(@@) % كم أيكة أنبتها جودك لي % % ترب ثراها طيب والماء عد % 86(@)(@@) % و كلما صوح منها غصن % عاد بها جودك غضات جدد % 87(@)(@@) % قد ملأت أوعيتي ثمارها % % فقدك إن رد عباب السيل قد % 88(@)(@@) % لم تبق في خلة تسدها % % و إنما الخلة بالمال تسد % 89(@)(@@) % لي فيك من كل فقيد خلف % فابق فما يضرني من أفتقد % 90(@)(@@) % إذا السنان سلمت طريرة % علياه فلتمض الأنابيب قصد % PageV01P513 91(@)(@@) % و اضرب بسهم في العلاء فائز % من يد عمر فائز لا يقتصد % 92(@)(@@) % تنفض عنك الحادثات شعبا % % حيث التهاني حافلات تحتشد % 93(@)(@@) % كل صباح شمس إقبالك في % % فتوقه مفتنة شمس الأبد % 94(@)(@@) % جذلان بين مادح وحاسد % فموجبات المدح يوجبن الحسد % PageV01P514 البحر : - 1(@)(@@) % خاطر بها إما ردى أو مراد % و ردلها أين وجدت المراد % 2(@)(@@) % و لا تماطلها بجماتها % % معللا أظماءها بالثماد % 3(@)(@@) % باعد عزيزا بين أسفارها % % فعزة النجم السري والبعاد % 4(@)(@@) % لله رام بلباناته % طول الليالي وعروض البلاد % 5(@)(@@) % يقدم إما مبلغا نفسه % % معذرة أو بالغا ما أراد % 6(@)(@@) % يحفزه الضيم فتنبو به % % مضاجع الغيد ولين المهاد % 7(@)(@@) % إذا أحس الهون صاحت به % % نخوته أو طار أو قيل كاد % 8(@)(@@) % يعجم منه الدهر إن رابه % جلد العصا صلب حصاة الفؤاد % 9(@)(@@) % سمت به الهمة حتى نجا % % منفردا من بين هذا السواد % 10(@)(@@) % موليا آخر حاجاته % خزائم العيس ولجم الجياد % PageV01P515 11(@)(@@) % أقسم مهما اكتحلت عينه % بمثله لا اكتحلت بالرقاد % 12(@)(@@) % و بات مغمور العلا شاكرا % % ميسوره يقنع بالإقتصاد % 13(@)(@@) % يرضى من الحظ بما جاءه % % عفوا وما الحظ سوى الاجتهاد % 14(@)(@@) % ينام للضيم على ظهره % % مراوح الخد وثير الوساد % 15(@)(@@) % إن راعه من يومه رائع % قال عدوا فرس الذل عاد % 16(@)(@@) % ما أكثر المنحى على مجده % % لبلغة ترجى ورزق يفاد % 17(@)(@@) % و مؤثر المال على عرضه % مجتهدا ينقص من حيث زاد % 18(@)(@@) % عد عن الدنيا وأبنائها % % وبع موداتهم بالبعاد % 19(@)(@@) % ما هذه الدهماء إلا دبى % ينشره في الأرض حب الفساد % 20(@)(@@) % إلا فتى يأنف من عيشة % لغيره فيها عليه اعتداد % PageV01P516 21(@)(@@) % و دولة تخطب راياتها % % باسم سواه في رؤس 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms158# الصعاد % 22(@)(@@) % مثل أي القاسم غيران يس % % تفيد من عزته ما استفاد % 23(@)(@@) % يجود بالنفس كما جاد أو % % يسود بالواجب من حيث ساد % 24(@)(@@) % هيهات قامت معجزات العلا % % فيه وبانت آية الإنفراد % 25(@)(@@) % لا تلد الأرض له من أخ % أعقمها من بعد طول الولاد % 26(@)(@@) % شاد به الله بني مجده % راسية والله ما شاء شاد % 27(@)(@@) % بان من الناس فما عابه % % شيء سوى تشبيهه بالعباد % 28(@)(@@) % أبلج في كل دجى فحمة % عمياء لا يقدح فيها الزناد % 29(@)(@@) % يصيب بالأول من ظنه % % فليس يستثنى ولا يستعاد % 30(@)(@@) % تهفو قوى الحلم وغضباته % % تأوى إلى مستحصفات شداد % PageV01P517 31(@)(@@) % أرهف من آرائه ذبلا % % ترود للطعن أمام الطراد % 32(@)(@@) % و قاد للأعداء رقاصة % تعزف لولا يده أن تقاد % 33(@)(@@) % معرقات كان أماتها % % ربائطا ما بين أبيات عاد % 34(@)(@@) % يشكمها إن خلعت لجمها % % ما جر من فضل نواصي الأعاد % 35(@)(@@) % خضبها الطعن بماء الطلى % % فشهبها في شعرات الوراد % 36(@)(@@) % يحالف الصبر عليها فتى % ما بدأ الكرة إلا أعاد % 37(@)(@@) % يبذل في حفظ العلا مهجة % تكبر أن تفديها نفس فاد % 38(@)(@@) % يرى طلاب العز أو برده % في حر ما يشرب يوم الجلاد % 39(@)(@@) % شجاعة سببها جوده % إن الفتى يشجع من حيث جاد % 40(@)(@@) % يا راكب الدهماء لم يحفها % % سير ولا حنت لتغريد حاد % PageV01P518 41(@)(@@) % حددها الطالي فما علبها % % على بياض الجسم لبس الحداد % 42(@)(@@) % لا تلتوي من ظما والثرى % % مكد وأكباد المطايا صواد % 43(@)(@@) % يحفزها من مثله سائق % يضل خريت الفلا وهو هاد % 44(@)(@@) % راكبها وهو على ظهرها % % موطأ الجنب قليل السهاد % 45(@)(@@) % يكرع في صاف قليل القذى % % عدب ويرعى أبدا بطن واد % 46(@)(@@) % بلغ بلغت الخير خير امرئ % % شدت عليه حبوات البواد % 47(@)(@@) % قل للوزير اعترقت بعدكم % % عظمى نيوب الأزمات الحداد % 48(@)(@@) % و ارتجع البخل وأبناؤه % % ما أسأرت عندي كف الجواد % 49(@)(@@) % غاض الندى بعدك يا بحره % و بان مذ بنت بفضل السداد % 50(@)(@@) % و اغبر جو كنت خضرته % فشمطت فيه الربا والوهاد % PageV01P519 51(@)(@@) % دين من العدل عفا رسمه % % شرعته للناس بعد ارتداد % 52(@)(@@) % و سنة في المجد قد قوضت % أقمت من أطنابها والعماد % 53(@)(@@) % و مهمل من كلم نادر % نفقته مدحك بعد الكساد % 54(@)(@@) % عاد يوفى أجره كاملا 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms159# % % عندك حيا قبل يوم المعاد % 55(@)(@@) % عرفته والناس من حاسد % أو جاهل بالقول والإنتقاد % 56(@)(@@) % أوحشت بالبعد فلا أوحشت % منك مغاني الكرم المستفاد % 57(@)(@@) % و شل سرح الأمر من قبضة ال % % راعي فأمسى هجمة لا تذاد % 58(@)(@@) % معطل المجلس والمنبر ال % % مركوب عاري السرج رخو البداد % 59(@)(@@) % تعلق الممسك أطرافه % % منه برسغي قاطع لا يصاد % 60(@)(@@) % كأنما صاح غراب النوى % % بداد فيه بعد جمع بداد % PageV01P520 61(@)(@@) % قد أسف الرأس على تاجه % % و أنكر العاتق فقد النجاد % 62(@)(@@) % و وجه بغداد على حسنه % % أسفع مكسوف عليه اربداد % 63(@)(@@) % كانت حريما بك ممنوعة ال % % ظهر فعادت وهي دار الجهاد % 64(@)(@@) % في كل بيت من أذى عولة % تبدا ومن خوف أنين يعاد % 65(@)(@@) % و كيف لا ينكر عهد الحمى % % يفوته العام بصوب العهاد . % 66(@)(@@) % يا مبدئ الإحسان فينا أعد % فالبدر إن مر مع الشهر عاد % 67(@)(@@) % قم فأثرها عزمة لم تنم % ضعفا ولم تنقص لغير ازدياد % 68(@)(@@) % عاجل بها جدع انوف طغت % و أرؤس قد أينعت للحصاد % 69(@)(@@) % يحسبها الأعداء قد أخمدت % و إنما جمرك تحت الرماد % 70(@)(@@) % لا تأخذ الدهر بزلاته % وسعه بالعفو وبالإعتماد % PageV01P521 71(@)(@@) % و لا تكشف عن صدور خبت % أضغانها من قاتل أو مضاد % 72(@)(@@) % فكلما تبصره صالحا % % فإنما يصلح بعد الفساد % 73(@)(@@) % أنا الذي رد زماني يدي % % من بعد شدى بكم واعتضاد % 74(@)(@@) % و طمعت في ذئاب العدا % % حتى حلا مضغ لها وازداد % 75(@)(@@) % وفت في حالي وفي عيشتي % % بطلبي ظلكم وافتقاد % 76(@)(@@) % لا نسي الله لكم والعلا % % ما زدتم في عدتي أو عتاد % 77(@)(@@) % و نعمة أتقلتم كاهلي % % بحملها وهي يد من أياد % 78(@)(@@) % كم ناخس ظهري على شكركم % % و حاسد في مدحكم أو معاد % 79(@)(@@) % و منكر حفظي لكم يرتمي % % مقاتلي من خطإ واعتماد % 80(@)(@@) % و ليس للخابط إلا العشا % % منى وللخارط إلا القتاد % PageV01P522 81(@)(@@) % و ناشطات أبدا نحوكم % % من عقل الفكر ليان المقاد % 82(@)(@@) % سوافر عن غرر وضح % % ينصع منهن سواد المداد % 83(@)(@@) % يخلطن فرض الحق في مدحكم % % بخالص الحب وصفو الوداد % 84(@)(@@) % حافظة فيكم عهود الندى % % حفظ الربا عهد السواري الغواد % 85(@)(@@) % و قلما يرعى أياديكم % في القرب من لم يرعها في البعاد % PageV01P523 البحر : - 1(@)(@@) % أمن أسماء 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms160# والمسرى بعيد % خيال كلما بخلت يجود % 2(@)(@@) % طوى طي البرود عراص نجد % و زار كما تأرجت البرود % 3(@)(@@) % يشق الليل والأعداء فردا % % شجاعا وهو يذعره الوليد % 4(@)(@@) % مواقد عامر وسروح طي % و ما قطعت برملتها زرود % 5(@)(@@) % له ما للبدور من الدياجي % % فأرقني وأصحابي هجود % 6(@)(@@) % فقمت له أطوقه عناقا % % يدا ضعفت وباعثها شديد % 7(@)(@@) % يد القناص تخفق أين مدت % حبالته فتضبط ما تصيد % 8(@)(@@) % فيا لك سحرة سرقت لو أني % % غدا فيها يتم لي الجحود . % 9(@)(@@) % و كيف وترب بابل سلخ شهر % برياها شهود وأرداني . % 10(@)(@@) % أما ومشعشعين بذات عرق % صلا يقرى العراق له عمود % PageV01P524 11(@)(@@) % و رام سهم عينيه بسلح % و بالزوراء يقتل من يريد % 12(@)(@@) % لما وفت الصوارم والعوالي % % بما جنت المحاجر والقدود % 13(@)(@@) % و كم يأوى المشقر من غزال % تحاذر من كناسته الأسود % 14(@)(@@) % تقلم حوله الأظفار عين % و يهتم دونه الأنياب جيد % 15(@)(@@) % و أبيض من نجوم بني هلال % وجوه العيش بعد نواه سود % 16(@)(@@) % هويت له الذي يهواه حتى % % حلا إعراضه لي والصدود % 17(@)(@@) % نفضن الحب أسمالا وعندي % % لهن على القلى حب جديد % 18(@)(@@) % و رحن وقد سفكن دما حراما % % تصيح به الأنامل والخدود % 19(@)(@@) % أما تنهاك عن عيد التصابي % % مواض من شبابك لا تعود % 20(@)(@@) % و قادحة لها في كل يوم % ذبول من نشاطك أو خمود % PageV01P525 21(@)(@@) % طوالع في عذارك لا الأحاظي % % قسمن طلوعهن ولا السعود % 22(@)(@@) % و قالوا حلمتك فقلت شوقا % % متى مبدى الخلاعة لي يعيد % 23(@)(@@) % يجر علي أبيضها خمولا % % و كنت بجاه أسودها أسود % 24(@)(@@) % و لم أر كالبياض مذمما في % % مواطن وهو في أخرى حميد % 25(@)(@@) % فتلحاه العوارض والمفالي % % و ترضاه الترائب والنهود % 26(@)(@@) % عدمت مكارم الأيام من ذا الش % % قي بها ومن فيها السعيد % 27(@)(@@) % مع الفضل الخصاصة والتمني % % و حول العجز تزدحم الجدود % 28(@)(@@) % تقام على الفقير وما جناها % % إذا وجبت على المثرى الحدود % 29(@)(@@) % و ما لك من أخ في الدهر إلا % % أخوك طريف مالك والتليد % 30(@)(@@) % محضت الناس مختبرا فكل % بكئ دون زبدته زهيد % PageV01P526 31(@)(@@) % هم حولي مع النعمى قيام % و هم عني مع الجلي قعود % 32(@)(@@) % توق تحية ابن العم يوما % % فرب فم بقبلته يكيد 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms161# % 33(@)(@@) % و لا تخدعك مسحة ظهر أفعى % % فتحت لثاته ناب حديد % 34(@)(@@) % و أغلب ما أتاك الشر ممن % % تذب الشر عنه أو تذود % 35(@)(@@) % و حولك من قبيلك من تكون ال % % قليل به وإن كثر العديد % 36(@)(@@) % مداج أو مباد أو حسود % و شرهم على النعم الحسود % 37(@)(@@) % و مولى عره بك مشخمر % بطول الحفر يهدم ما تشيد % 38(@)(@@) % نصحت لمارق من آل عوف % % لو أن النصح يبلغ ما أريد % 39(@)(@@) % و قلت له قناتك لا تدعها % % توصم بالعقوق ولا تميد % 40(@)(@@) % و بيتك لا تبدل فيه غدرا % % فإن عليك ما يجني الندود % PageV01P527 41(@)(@@) % و لا تعبث بعز مزيدي % لتنقصه وأنت به تزيد % 42(@)(@@) % هم التحموك معروقا وضموا % % عزيبك وهو منتحس طريد % 43(@)(@@) % و مدوا ضبعك المغمور حتى % % سما بك بعد مهبطه صعود % 44(@)(@@) % إلى ناد تفوه به وتغشى % % و سامرة يشب لها وقود % 45(@)(@@) % عنوا بثراك واغترسوك حتى % % بسقت على العضاه وأنت عود % 46(@)(@@) % و ربوا نعمة لك لا يغطي % % عليها الستر غمطك والجحود % 47(@)(@@) % فما غني المبصر وهو باغ % بما تجدي المشورة أو تفيد % 48(@)(@@) % و قام يقودها سوقا عجافا % أعز من القيام بها القعود % 49(@)(@@) % يلوث جبينه منها بعار % تبيد المخزيات ولا يبيد % 50(@)(@@) % فكيف وأنت طير البغي فيها % % جرت لك بالتي عنها تحيد % PageV01P528 51(@)(@@) % نزلت لها بدار الهون جارا % % لأقوام تضام وهم شهود % 52(@)(@@) % صديق العجز أسلمك الأداني % % بجرمك واستراب بك البعيد % 53(@)(@@) % تقاذفك المهامة والفيافي % % و تنكرك التهائم والنجود % 54(@)(@@) % فما لك لا وألت وأنت حر % يحيرك من عشيرتك العبيد % 55(@)(@@) % و أن الجار لا حي عزيز % بأسرته ولا ميت فقيد % 56(@)(@@) % و لو بأبي الأغر صرخت فاءت % عليك فضول رأفته تعود % 57(@)(@@) % إذن لأثرت عاطفة وحلما % تموت له الضغائن والحقود % 58(@)(@@) % و كان الصفح أبرد في حشاه % % إذا التهبت من الحنق الكبود % 59(@)(@@) % و عاد أبر بالأنساب منكم % % و بالقربي لو أنك تستعيد % 60(@)(@@) % نتجت من المنى بطنا عقيما % % نمى بك والمنى أم ولود % PageV01P529 61(@)(@@) % أتنشد ما أضل الحزم منها % % أطل أسفا فليس لها وجود . % 62(@)(@@) % و توعده وذلك ذل جار % متى اجتمع المذلة والوعيد % 63(@)(@@) % تريدون الرؤس وقد خلقتم % % ذنابي لا انتفاع بأن تريدوا 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms162# % % 64(@)(@@) % و يأبى الله إلا مزيديا % % على أسد يؤمر أو يسود % 65(@)(@@) % فدعها للذي جفلت إليه % % و سله العفو فهو به يجود % 66(@)(@@) % دعوا قوما يخاصم في علاهم % % رقابكم المواثق والعهود % 67(@)(@@) % بأي سلاحكم قارعتموهم % % أبي الماضي الشبا ونبا الحديد % 68(@)(@@) % و إن سيوفكم لتكون فيهم % % مكاوي لا تنش لها الجلود % 69(@)(@@) % ففخرا يا خزيم فكل فخر % إلى أنواركم أعمى بليد % 70(@)(@@) % لكم نار القرى وندى العشايا % % و فرسان الصباح وعوا فنودوا % % PageV01P530 71(@)(@@) % و أندية وألسنة هبوب % إذا انتضيت وأحلام ركود % 72(@)(@@) % و منكم كل ولاج خروج % و ذو حزمين صدار ورود % 73(@)(@@) % موقر ما أقل السرج ثبت % إذا مالت من الرهج اللبود % 74(@)(@@) % إذا مضر تطامن كل بيت % لها وعلا بربوتها الصعيد % 75(@)(@@) % و كانت جمرة الناس احتبيتم % % و فيكم عز سورتها العتيد % 76(@)(@@) % بنى لكم أبو المظفار مجدا % % على موت الزمات له خلود % 77(@)(@@) % و قدمكم على الناس اضطرارا % % مقامات وأيام شهود % 78(@)(@@) % إجارة حاتم ودم شريق % به لبات حجر والوريد % 79(@)(@@) % و طعنة حاتم وطر قديم % قضى مروان فيها ما يردي % 80(@)(@@) % و صاحت باسم صامت نفس حر % ربيع المقترين بها يجود % PageV01P531 81(@)(@@) % و صخر ذاب صخر على قناكم % % ولان لكم به الحجر الشديد % 82(@)(@@) % و يوم عتيبة علم عريض % تباشره المواسم والوفود % 83(@)(@@) % كرائم من دماء باردات % لديكم لاديات ولا مقيد % 84(@)(@@) % و إن ببابل منكم لبحرا % % لو أن البحر جاد كما يجود % 85(@)(@@) % إذا الوادي جرى ملحا أجاجا % % ترقرق ماؤه العذب البرود % 86(@)(@@) % فتى السن مكتهل حجاه % طريف الملك سؤدده تليد % 87(@)(@@) % إذا اشتبهت كوااكبهم طلوعا % % فنور الدولة القمر الوحيد % 88(@)(@@) % أناف به وقدمه عليكم % % أب كرم أناف به الجدود % 89(@)(@@) % أغر قسيمه السيف المحلى % و مسحب ذيله الروض المجود % 90(@)(@@) % يعود إذا تغرب في العطايا % % و يقلع في الهنات فلا يعود % PageV01P532 91(@)(@@) % بليل الريق من كلم سدسد % يقوم بنصره رمح سديد % 92(@)(@@) % تراغت حول قبته بكار % شفار الجازرين لها قتود % 93(@)(@@) % تراه الخيل أفرس من تمطت % به والجيش أشجع من يقود % 94(@)(@@) % و يغنى ثم يفقر راحتيه % % مقال المادحين الفقر جود % 95(@)(@@) % من الغادي ينقله حصان % مفدي السبق أو عنس وخود % 96(@)(@@) % إذا ركب الطريق وفي بشرطي 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms163# % % أخ منه على أربي عقيد % 97(@)(@@) % إذا بلغت عن إنسان ينزو % % وراء ضلوعه قلب عميد % 98(@)(@@) % يرى المرعى الخصيب يصدعنه % % و يظمأ وهو يمكنه الورود % 99(@)(@@) % فقل لأمير هذا الحي عني % % أيجمع لي بك الأمل البديد % 100(@)(@@) % أحن إلى لقائك والليالي % % علي مع العوائق لي جنود % PageV01P533 101(@)(@@) % و تجذبني نوازع موقظات % إليك وراءها قدر رقود % 102(@)(@@) % و كم وعدت بك الأمال نفسي % % و يقضي الدهر أن تلوى الوعود % 103(@)(@@) % فهل من عطفة بالود إني % % على شحط النوى خل ودود % 104(@)(@@) % محب بالصفات ولم أشاهد % كأني من نجيكم شهيد % 105(@)(@@) % و كم ملك سواكم مد نحوي % % يديه فقصر الباع المديد % 106(@)(@@) % و معصوب بذكرى أو بشعري % % أحول عنه شعري أو أحيد % 107(@)(@@) % أحاذر أن تبدلني أكف % سوائم صانني عنها الغمود % 108(@)(@@) % لعل علاكم وندى يديكم % % سينهضني بمثقلة تؤود % 109(@)(@@) % و مجتمع عليها القول أني % بها والقول مشترك فريد % 110(@)(@@) % من الغر الغرائب لم يعبها ال % % كلام الوغد والمعنى الرديد % PageV01P534 111(@)(@@) % نوادر تلقط الأسماع منها % % عن الأفواه ما نثر النشيد % 112(@)(@@) % تسير بوصفكم وتقيم فيكم % % خوالد فهي قاطنة شرود % 113(@)(@@) % و ليس يضر راجيكم لرفد % تلومه إذا قصد القصيد % PageV01P535 البحر : - 1(@)(@@) % جم لها الوادي وعز الذائد % و طاب ما حدث عنها الرائد % 2(@)(@@) % فخلها راتعة مجرورة % وراءها الأرسان والمقاود % 3(@)(@@) % يخلف ما استسلف من جراتها % % كهل أثيث ومعين بارد % 4(@)(@@) % حيث المغير لا ينال فرصة % منها ولا يطمع فيها الطارد % 5(@)(@@) % تذب عنها من سمات ربها % % صوارم ليس لها مغامد % 6(@)(@@) % إذا بدت في عنق أو حارك % فهي عليها أعين رواصد % 7(@)(@@) % و نم فقد حرمها هذا الحمى % % و ضمها وهي دخان شارد % 8(@)(@@) % و أعجز الناس جميعا رعيها % % فاليوم يرعاها جميعا واحد % 9(@)(@@) % أروع لا يغلبه المكر ولا % % تدب في حريمه المكايد % 10(@)(@@) % أعارها عينا فكانت عوذة % لها وشيطان الزمان مارد % PageV01P536 11(@)(@@) % أفرشها كافي الكفاة أمنه % فالظل سكب والنسيم بارد % 12(@)(@@) % دان بتاج الحضرة الدهر لها % % و حل حبل الذل عنها العاقد % 13(@)(@@) % و صدقت أن الربيع بعدها % % بوارق من يده رواعد % 14(@)(@@) % غاصت غصون المجد تحت مائها % % فأورق الذاوي وقام المائد % 15(@)(@@) % و ضحك القاطب من وجه الثرى % % و سال وادي المكرمات 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms164# الجامد % 16(@)(@@) % و بشر الفضل بقايا أهله % لا تقنطوا في الناس بعد ماجد % 17(@)(@@) % نقل لأبناء الطلاب والمنى % % و الحاج ضاقت بهم المقاصد % 18(@)(@@) % يتاجرون المجد فتخيس في % % أيديهم البضائع الكواسد % 19(@)(@@) % تضمكم حنوته وأنتم % عزون في الآفاق أو بدائد % 20(@)(@@) % زم الأمور فلوى أعناقها % % ساع إلى الغايات وهو قاعد % PageV01P537 21(@)(@@) % و دبر الدنيا على علاتها % % فصلحت والدهر دهر فاسد % 22(@)(@@) % ماض له من عزمه مجرد % يذب من جهل الزمان غامد % 23(@)(@@) % يرى بوجه اليوم صدر غده % تعطيه ما في المصدر الموارد % 24(@)(@@) % لا يأخذ التدبير إلا من عل % فالناس ينحطون وهو صاعد % 25(@)(@@) % رأى انتهاء مجده مبتدأ % لما أعان الكف منه الساعد % 26(@)(@@) % أسهره حب العلا منفردا % % و هو على ظن العيون راقد % 27(@)(@@) % جد وقارا والزمان هازل % و جاد عفوا والسحاب جامد % 28(@)(@@) % و لاح في الملك شهابا فوري % % زناده والملك نجم خامد % 29(@)(@@) % منتصرا بنفسه لنفسه % % كاليث يشري ماله مساعد % 30(@)(@@) % لا يملك الحفظ عليه أمره % و لا تفري حلمه الشدائد % PageV01P538 31(@)(@@) % ينهضه الكمال من اثقاله % بأوسق تلفظها الجلامد % 32(@)(@@) % مد على الدولة من جناحه % % ما مد عطفا لبنيه الوالد % 33(@)(@@) % حتى استقامت وهي بلهاء الخطا % % عمياء ما بين يديها قائد % 34(@)(@@) % كم قدم قبلك قد زلت بها % % ضعفا وكف لم يعطها الساعد % 35(@)(@@) % و ضابط لم يغنه لما طغت % أدواؤها التجريب والعوائد % 36(@)(@@) % يحرسها وليس من حماتها % % مثل الشغا ينقص وهو زائد % 37(@)(@@) % جاءت على الفترة منه آية % معجزة قامت بها الشواهد % 38(@)(@@) % موهبة فاجئة لم تحتسب % و لم توفه بها المواعد % 39(@)(@@) % كنت خبيئا ترقب الأيام في % % إظهاره الميقات أو تراصد % 40(@)(@@) % كالنار في الوند تكون شررا % % بالأمس وهو اليوم جمر واقد % PageV01P539 41(@)(@@) % فأبرزتك للعيون كوكبا % % يزهر لم تجر به العوائد % 42(@)(@@) % يفديك محظوظون وجه عجزهم % % بغلط النعمة فيهم شاهد % 43(@)(@@) % قد سرق الدهر لهم سيادة % ليس لها من المساعي عاضد % 44(@)(@@) % تنافر الأقلام عن أيمانهم % % و تقشعر منهم الوائد % 45(@)(@@) % لم ينظموت المجد كما نظمته % و لا حلت عندهم المحامد % 46(@)(@@) % و لا أعان طارفا من حظهم % % مجد أب مثل أبيك تالد % 47(@)(@@) % و خير من شاد الفخار رافع % أسرته لما بنى قواعد % 48(@)(@@) % و بعض علياء 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms165# الفتى مكاسب % بنفسه وبعضها موالد % 49(@)(@@) % و ليهنك الأمر الذي ذل به % % لك العزيز وأقر الجاحد % 50(@)(@@) % ولان في يديك منه مرس % ملاوذ من رامه محايد % PageV01P540 51(@)(@@) % ينقص من قدرك وهو فاضل % على وسيعات الأماني زائد % 52(@)(@@) % و مشرفات فضل لبستها % % تزلق عنها المقل الحدائد % 53(@)(@@) % كلبدة الليث سطا وحسنها % % كالوشي تكساه الدمى الخرائد % 54(@)(@@) % لو كانت الأفلاك أجسادا لما % % كان لها من مثلها مجاسد % 55(@)(@@) % باطنة وظاهر جمالها % % فالحسن منها غائب وشاهد % 56(@)(@@) % تسحبها في الأرض ولفخرها % % معالق في الجو أو معاقد % 57(@)(@@) % و كالسماء عمة صبغتها % % قد جاءها من الزمان وافد % 58(@)(@@) % مقدودة منها ومن نجومها % % في طرفيها سائر وراكد % 59(@)(@@) % إن لم تكن تاجا فقد أكسبها % % نورك ما لم يكس تاجا عاقد % 60(@)(@@) % و ضارب إلى الوجيه عرقه % بأربع تشقى بها الأوابد % PageV01P541 61(@)(@@) % من اللواتي نصرت آباءها % % في السبق أمهاتها الردائد % 62(@)(@@) % و صبحتها بالصريف علبا % قبل عيال ربها الولائد % 63(@)(@@) % خاض الظلام فاهتدى بغرة % كوكبها لمقلتيه قائد % 64(@)(@@) % يجاذب الريح على الأرض ومن % % قلائد الأفق له قلائد % 65(@)(@@) % حلي من التبر إذا خف بها % % أثقل فهو تحتها مجاهد % 66(@)(@@) % ينصاع كالمريخ في التهابه % و أنت فوق ظهره عطارد % 67(@)(@@) % غرائب من الحباء جمعت % بها لك الفوارك الشوارد % 68(@)(@@) % تبرع الملك بها مبتدئا % % و كل باد بالجميل عائد % 69(@)(@@) % قد كنت عيفت لك الطير بها % % مستيقظا والحظ بعد هاجد % 70(@)(@@) % و برقت لي في المنى سيوفها % % من قبل أن تبرزها المغامد % PageV01P542 71(@)(@@) % علما بما عندك من أداتها % % و أنها سيف وأنت ساعد % 72(@)(@@) % فلم يخني فارس الظن ولا % % غرتني المخايل الشواهد % 73(@)(@@) % و بعد لي فيك رجاء ناظر % إلى السماء وحساب زائد % 74(@)(@@) % حتى يشق للزمان رمسه % و أنت باق والعلاء خالد % 75(@)(@@) % بك استقاد الفضل ودماؤه % % مطلولة وعز وهو كاسد % 76(@)(@@) % نصرته والناس إما جاهل % بحقه أو عارف معاند % 77(@)(@@) % و رشت من أبنائه أجنحة % طار حصيصا ريشه البدائد % 78(@)(@@) % تعطي وأنت معدم وإنما % % يعطي أخوك البحر وهو واجد % 79(@)(@@) % زرعت عندي نعمة سالفة % أنت لهذا الشكر منها حاصد % 80(@)(@@) % عطفا على ذكرى ووصفا فخره % باق علي والزمان بائد % PageV01P543 81(@)(@@) % و نظرا بدأتني برأيه % % لو أن باديه إلي عائد 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms166# % 82(@)(@@) % لكن أردت الخير لي ودونه % % حوائل من زمني حوائد % 83(@)(@@) % فهل لأرضى لك أن تبلها % % على الجدوب سحبك الجوائد % 84(@)(@@) % غرست منك بالولاء والهوى % % غرسا فماذا أنا منه حاصد % 85(@)(@@) % أنظر فقد قدرت في مظلمة % كنت على إنصافها تعاهد % 86(@)(@@) % و اقض ديون المجد فيها وارع لي % % ما تقتضي الأواصر التوالد % 87(@)(@@) % و لا تكن حاشاك من معاشر % تخذل أقوالهم العقائد % 88(@)(@@) % كانوا يدي وريحهم راكدة % و أسرتي والحظ عنهم عاصد % % 89(@)(@@) % فحين هيت عاصفا رياحهم % % قل الوفي ونأى المساعد % 90(@)(@@) % غنيت أن أسكرني جفاؤهم % % و في غنائي لهم عرابد % PageV01P544 91(@)(@@) % و بخلاء لا تهنا نعمة % هم اليها السبل والمقاصد % 92(@)(@@) % إذا كرمت لؤموا سفارة % و إن قربت فهم أباعد % 93(@)(@@) % تغالق الأرزاق أيمانهم % تضج من مطلهم المواعد % 94(@)(@@) % لا يرتجى حكم القريض بينهم % % و لا يخاف اللغو والعرابد % 95(@)(@@) % و كيف أبغى في النبيط منهم % و العجم أن تنفعني القصائد % 96(@)(@@) % تلاف بالفضل الوسيع ما جنى % % مسلمهم علي والمعاهد % 97(@)(@@) % حاشاك يشقى واحد بفضله % على زمان أنت فيه واحد % 98(@)(@@) % قد طال صوني سمعك المشغول عن % % بثك ما ألقى وما أكابد % 99(@)(@@) % و نقبت جسمي وقلبي صابر % من زمني نيوبه الحدائد % 100(@)(@@) % و لم يدع تحت الخطوب فضلة % في تدب نحوها الأوابد % PageV01P545 101(@)(@@) % و أعوز المقام أن أسطيعه % و سددت عن سيري المقاصد % 102(@)(@@) % أيقتل الزمان مثلي هدرا % % و أنت ثأري والزمان عامد % 103(@)(@@) % أنت بفضلي شاهد فلا أمت % هزلا وتضييعا وأنت شاهد % 104(@)(@@) % أكد مع الإثقال نحوي نظرة % تنعشني لحاظها الردائد % 105(@)(@@) % لعلها يا خير من يدعى لها % % تصلح شيئا هذه المفاسد % 106(@)(@@) % و ابتع بها الشكر فعندي عوض % تضمنه القواطن الشوارد % 107(@)(@@) % كل مطاع أمرها مسلط % في الشعر ملقاة لها المقالد % 108(@)(@@) % سائرة تنشرها الركبان أو % % عامرة بذكرها المشاهد % 109(@)(@@) % ترى الكلام عجزا وطرفا % و كلها وسائط فرائد % 110(@)(@@) % إذا رأت عرض كريم عاطلا % % فهي له العقود والقلائد % PageV01P546 111(@)(@@) % تحمل من وصفك ما يحمله % عن روضة الحزن النسيم البارد % 112(@)(@@) % طالعة بها التهاني أنجما % % ما كر نوروز وعيد عائد % 113(@)(@@) % يفنى بنو الدنيا وأنت معها % % باق على مر الزمان خالد % 114(@)(@@) % تبقى عليك والذي نأخذه % من الجزاء مضمحل بائد 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms167# % 115(@)(@@) % محامد يحسدك الناس لها % % و الناس إما حامد أو حاسد . % PageV01P547 البحر : - 1(@)(@@) % و خرقاء معرقة في الضلا % % ل شاقك في القصد إرشادها % % 2(@)(@@) % إذا سقيت فبما أطعمت % مرنقة ماؤها زادها % % 3(@)(@@) % و إن رشفت ريقها ألسن % و قاءت ففي القيء أكبادها % % 4(@)(@@) % تقطع منها فلا ترعوي % % و تعدي بها وهي عوادها % % 5(@)(@@) % ترى زوجها أبدا فوقها % % و من غيره جاء أولادها % % PageV01P548 البحر : - 1(@)(@@) % بكى النار سترا على الموقد % و غار يغالط في المنجد % 2(@)(@@) % أحب وصان فوري هوى % أضل وخاف فلم ينشد % % 3(@)(@@) % بعيد الإضاحة عن عاذل % غني التفرد عن مسعد % 4(@)(@@) % حمول على القلب وهو الضعيف % صبور عن الماء وهو الصدى % % 5(@)(@@) % وقور وما الخرق من حازم % متى ما يرح شيبه يغتدي % % 6(@)(@@) % و يا قلب إن قادك الغانيات % فكم رسن فيك لم ينقد % 7(@)(@@) % أفق فكأني بها قد أمر % بأفواهها العذب من موردي % % 8(@)(@@) % و سود ما ابيض من ودها % % بما بيض الدهر من أسودي % % 9(@)(@@) % و ما الشيب أول غذر الزمان % % بلى من عوائده العود % 10(@)(@@) % لحا الله حظي كما لا يجود % بما أستحق وكم اجتدى % % PageV01P549 11(@)(@@) % و كم أتعلل عيش السقيم % % أذمم يومي وأرجو غدي % % 12(@)(@@) % لئن نام دهري دون المنى % % و أصبح عن نيلها مقعدي % % 13(@)(@@) % و لم أك أحمد أفعاله % % فلي أسوة ببني أحمد % 14(@)(@@) % بخير الورى وبني خيرهم % % إذا ولد الخير ولم يولد % 15(@)(@@) % و أكرم حي على الأرض قام % % و ميت توسد في ملحد % 16(@)(@@) % و بيت تقاصر عنه البيوت % و طال عليا على الفرقد % 17(@)(@@) % تحوم الملائك من حوله % و يصبح للوحي دار الندى % % 18(@)(@@) % ألا سل قريشا ولم منهم % من استوجب اللوم أو فند % 19(@)(@@) % و قل ما لكم بعد طول الضلا % % ل لم تشكروا نعمة المرشد % 20(@)(@@) % أتاكم على فترة فاستقام % % بكم جائرين عن المقصد % PageV01P550 21(@)(@@) % و ولى حميدا إلى ربه % % و من سن ما سنه يحمد % 22(@)(@@) % و قد جعل الأمر من بعده % % لحيدر بالخبر المسند % 23(@)(@@) % و سماه مولى بإقرار من % % لو اتبع الحق لم يجحد % 24(@)(@@) % فملتم بها حسد الفضل عنه % % و من يك خير الورى يحسد % 25(@)(@@) % و قلتم بذاك قضى الاجتماع % ألا إنما الحق 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms168# للمفرد % 26(@)(@@) % يعز عل هاشم و النبي % تلاعب تيم بها أو عدى % % 27(@)(@@) % و إرث علي لأولاده % % إذا آية الإرث لم تفسد % % 28(@)(@@) % فمن قاعد منهم خائف % % و من ثائر قام لم يسعد % 29(@)(@@) % تسلط بغيا أكف النفا % % ق منهم على سيد سيد % 30(@)(@@) % و ما صرفوا عن مقام الصلاة % و لا عنفوا في بني المسجد % PageV01P551 31(@)(@@) % أبوهم وأمهم من علم % % ت فانقص مفاخرهم أو زد % 32(@)(@@) % أرى الدين من بعد يوم الحسين % % عليلا له الموت بالمرصد % 33(@)(@@) % و ما الشرك لله من قبله % % إذا أنت قست بمستبعد % 34(@)(@@) % و ما آل حرب جنوا إنما % % أعادوا الضلال على من بدى % % 35(@)(@@) % سيعلم من ناظم خصمه % بأي نكال غدا يرتدي % % 36(@)(@@) % و من ساء أحمد يا سبطه % فباء بقتلك ماذا يدي % % 37(@)(@@) % فداؤك نفسي ومن لي بذا % % ك لو أن مولى بعبد فدى % % 38(@)(@@) % و ليت دمي ما سقى الأرض منك % % يقوت الردى وأكون الردى % % 39(@)(@@) % و ليت سبقت فكنت الشهيد % أمامك يا صاحب المشهد % 40(@)(@@) % عسى الدهر يشفي غدا من عدا % % ك قلب مغيظ بهم مكمد % PageV01P552 41(@)(@@) % عسى سطوة الحق تعلو المحال % عسى يغلب النقص بالسؤدد % 42(@)(@@) % و قد فعل الله لكنني % % أرى كبدي بعد لم تبرد % 43(@)(@@) % بسمعي لقائكم دعوة % يلبي لها كل مستنجد % 44(@)(@@) % أنا العبد والاكم عقده % إذا القول بالقلب لم يعقد % 45(@)(@@) % و فيكم ودادي وديني معا % و إن كان في فارس مولدي % % 46(@)(@@) % خصمت ضلالي بكم فاهتديت % و لولاكم لم أكن أهتدى % % 47(@)(@@) % و جرتموني وقد كنت في % % يد الشرك كالصارم المغمد % 48(@)(@@) % و لا زال شعري من نائج % ينقل فيكم إلى منشد % 49(@)(@@) % و ما فاتني نصركم باللسان % % إذا فاتني نصركم باليد % PageV01P553 البحر : - 1(@)(@@) % حرم عليها نزهات الوادي % % و ولها جوانب البلاد % 2(@)(@@) % و غنها إن طربت لصافر % آذانها برهج الجلاد % 3(@)(@@) % و اسبق بها إلأى العلا شوط الصبا % % لعلها تعد في الجياد % 4(@)(@@) % قد لفظتك هاجدا وقاعدا % % مكاسر البيت وحجر النادي % % 5(@)(@@) % كم التمادي تطلب العفو به % % قد بلغ الجهد بك التمادي % % 6(@)(@@) % لا بد إن عفت تخاليط القذي % % ان تخلط الأرجل بالهوادي % % 7(@)(@@) % ما العز بين الحجرات كامنا % % و لا الغني في الطنب 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms169# والعماد % 8(@)(@@) % تفسحي يا نفس أو تطوحي % % إما الردى أو درك المراد % 9(@)(@@) % إن النفوس فاعلمي إن حملت % مسجونة في هذه الأجساد % 10(@)(@@) % خير من الزاد الوثير والأذى % % أن أنفض الأرض بغير زاد % PageV01P554 11(@)(@@) % قد ملني حتى أخي وأنكرت % كلاب بيتي في الدجى سوادي % % 12(@)(@@) % كم أحمل الناس على علاتهم % % قد جلب الظهر وجب الهادي % % 13(@)(@@) % في كل دار ناعق يخبط في % % جنبي وهو خاطب ودادي % % 14(@)(@@) % و حالم لي فإذا استسعدته % في يوم روع مال بالرقاد % % 15(@)(@@) % يعجبه قربي لغير حاجة % فإن عرت طار مع البعاد % 16(@)(@@) % إذا عدمت عددي ضحكت من % % تبجحي بكثرة الأعداد % 17(@)(@@) % أنسا على ما خبلت وخلبت % بروقها بوحشة انفرادي % % 18(@)(@@) % ما أنا والحزم معي بآمن % شريحتى صدري على فؤادي % % 19(@)(@@) % قد شمت النقصان بالفضل وقد % % تسلط العجز على السداد % 20(@)(@@) % فاجف الوصول واهج من مدحه % فربما تصلح بالفساد % PageV01P555 21(@)(@@) % و لا تخل ود العميد منحة % سيقت بقصد أو عن اعتماد % 22(@)(@@) % لكنها جوهرة يتيمة % تقذفها البحار في الآحاد % 23(@)(@@) % جاءت بها والوالدات عقم % مقبلة غريبة الولاد % 24(@)(@@) % خل له الناس وبعهم غانيا % % به على كثرتهم وفاد % 25(@)(@@) % و حكم المجد التليد فيهم % % و فيه واسأل ألسن الرواد % 26(@)(@@) % بالأقربين الحاضرين منهم % ما غاب من ذاك البعيد النادي % % 27(@)(@@) % و حبذا بين بيوت أسد % بيت إذا ضل الضيوف هادي % % 28(@)(@@) % أتلع طال كرما ما حوله % % تشرف الربو على الوهاد % 29(@)(@@) % موضحة على ثلاث ناره % إن سرفوا النيران في الرماد % 30(@)(@@) % بيت وسيع الباب مبلول الثرى % % ممهد المجلس رخص الزاد % % PageV01P556 31(@)(@@) % إن قوض البيوت أصل حائر % طنب بالآباء والأجداد % 32(@)(@@) % ترفع عن محمد سجوفه % جوانب الظلماء عن زناد % 33(@)(@@) % أبلج يورى في الدجى جبينه % % على خبو الكوكب الوقاد % 34(@)(@@) % ساد وما حلت عرى تميمه % % بالأطيبين النفس والميلاد % 35(@)(@@) % و جاد حتى صاحت المزن به % % أكرمت يا مبخل الأجواد % 36(@)(@@) % من غلمة تحاشدوا على الندى % % تحاشد الإبل على الأوراد % 37(@)(@@) % و دبروا المجد فسدوا ما ولوا % % سد السيوف ثغر الأغماد % 38(@)(@@) % مشوا على الدارس من طرق العلا % % و يقتفي الرائح إثر الغادي % % 39(@)(@@) % يعتقبون درجا ذروتها % % تعاقب العقود في الصعاد % 40(@)(@@) % مثنى ووحدانا إلى أن أحدقوا % % بهالة البدر على ميعاد 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms170# % PageV01P557 41(@)(@@) % للكلم المعتاص من سلطانهم % % عليه ما للجفل المنقاد % 42(@)(@@) % فهم قلوب الخيل مثل ما هم % إن خطبوا ألسنة الأعواد % 43(@)(@@) % هل راكب وضمنت حاجته % غضبي القماص سمحة القياد % 44(@)(@@) % مطلقة الباع إذا تقيدت % من الكلال السوق بالأعضاد % 45(@)(@@) % تدر قبل البو أو تطرب من % % مراحها قبل غناء الحادي % % 46(@)(@@) % لا يتهم الليل عليها فجره % و لا يخاف عدوة العوادي % % 47(@)(@@) % لها من الجو العريض ما اشتهت % همك في السرعة والإبعاد % 48(@)(@@) % تصدقها واللحظات كذب % عينا قطامي على مرصاد % 49(@)(@@) % بلغ وفي عتابك الخير إذن % % تحية من كلف الفؤاد % 50(@)(@@) % ينفث فيها شجوه كما اشتفى ال % % مدنف بالشكوى إلى العواد % PageV01P558 51(@)(@@) % قل لعميد الحي بين بابل % و الطف جادت ربعك الغوادي % % 52(@)(@@) % ما اعتضت أو نمت على البين فلا % % بقلقي بت ولا سهادي % % 53(@)(@@) % أشرقني الشوق إليك ظامئا % % بالعذب من أحبابي البراد % 54(@)(@@) % ما زارني طيف حبيب هاجر % إلا اعترضت فثنى وسادي % % 55(@)(@@) % و لا نسمت البان تفليه الصبا % % إلا تضوعتك من أبرادي % % 56(@)(@@) % و البدر يحكيك فيشقى ناظري % % حتى كأن بيضه دآدي % % 57(@)(@@) % فهل على ماء اللقاء بلة مالك لا تسمح بالقرب كما تسمح بالمال وبالإرفاد % يروي بها هذا النزاع الصادي سقط بيت ص % % 58(@)(@@) % أنت جواد والنوى مبخلة % ما أعجب البخل من الجواد . % 59(@)(@@) % ملكتني بالود والرفد معا % % و الرفد من جوالب الوداد % 60(@)(@@) % و قاد عنقي لك خلق سلس ال % % حبل على صعوبة انقيادي % % PageV01P559 61(@)(@@) % حملت منك اليد بعد أختها % % بكاهل لا يحمل الأيادي % % 62(@)(@@) % و لم يكن قبلك من مآربي % % لمس يد المجدي ولا من عادي % % 63(@)(@@) % موافقا أعطيت فيها مسرفا % % و البحر يعطيني على اقتصاد % 64(@)(@@) % فما أذم الحظ إلا قمت لي % % بمنة تكسبه أحمادي % % 65(@)(@@) % و لا أنادي الناس إلا خلتني % % إياك من بينهم أنادي % % 66(@)(@@) % و لم تكن كخلبي برقه % لا للحيا اعتن ولا الإرشاد % 67(@)(@@) % يجلب مدحي بلسان ذائب % مع النفاق ويد جماد % 68(@)(@@) % ما عرفت فيه الندى طي ولا % % أغناه شيخ البيت في إياد % 69(@)(@@) % يدخل في مجد الكرام زائدا % % غبينة الأنساب في زياد % 70(@)(@@) % تلسط البخل على جنابه % تسلط الخلف على الميعاد % PageV01P560 71(@)(@@) % لتعلمني شاكرا مجتهدا % % إن هو كافا عفوك اجتهادي 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms171# % % 72(@)(@@) % بكل مغبوط بها سامعها % % كثيرة الأحباب والحساد % 73(@)(@@) % مصمت لها الندي واسع % % نصيبها الضخم فم الإنشاد % 74(@)(@@) % غريبة حتى كأن ما طبعت % من طيب هذا الكلم المعتاد % 75(@)(@@) % ترفعها عنايتي عن كلفة ال % % لفظ ومعنى الغارة المعاد % 76(@)(@@) % تغشاك إما بالتهاني بالعلا % % أو التهادي بكرة الأعياد % PageV01P561 البحر : - 1(@)(@@) % بعينيك يوم البينغيبي ومشهدي % % و ذل مقامي في الخليط ومقعدي % % 2(@)(@@) % و قولي وقد صاحوا بها يعجلونها % % نشدتكم في طارق لم يزود % 3(@)(@@) % أناخ بكم مستسقيا بعض ليلة % و لم يدر أن الموت منها ضحى الغد % 4(@)(@@) % أتحمون عن عض الضراغم جاركم % % و يقتلني منكم غزال ولا يدي % % 5(@)(@@) % و ما زلت أبكي كيف حلت بحاجر % قوى جلدي حتى تداعي تجلدي % % 6(@)(@@) % و عنفني سعد على فرط ما رأى % % فقلت أتعنيف ولم تك مسعدي % % 7(@)(@@) % أسفت لحلم لي يوم بارق % فأخرجه جهل الصبابة من يدي % % 8(@)(@@) % و ما ذاك إلا أن عجلت بنظرة % قتلت بها نفسي ولم أتعمد % 9(@)(@@) % تحرش بأحقاف اللوى عمر ساعة % و لولا مكان الريب قلت لك ازدد % % 10(@)(@@) % و قل صاحب لي ضل بالرمل قلبه % لعلك أن يلقاك هاد فتهتدي % % PageV01P562 11(@)(@@) % و سلم على ماء به برد غلتي % % و ظل أراك كان للوصل موعدي % % 12(@)(@@) % و قل لحمام البانتين مهنئا % تغن خليا من غرامي وغرد % 13(@)(@@) % أعندكم يا قاتلين بقية % على مهجة إن لم تمت فكأن قد % 14(@)(@@) % ويا أهل نجد كيف بالغور عندكم % % بقاء تهامي يهيم بمنجد % % 15(@)(@@) % ملكتم عزيزا رقه فتعطفوا % % على منكر للذل لم يتعود % % 16(@)(@@) % أغدرا وفيكم ذمة عربية % و بخلا ومنكم يستفاد ندى اليد % 17(@)(@@) % فليت وجوه الحي أعدت قلوبه % ففجر لي ماء بها كل جلمد % 18(@)(@@) % وليتكم جيران عوف تلقنوا % % خلال الندى والجود من آل مزيد % % 19(@)(@@) % من الضيقي الأعذار والواسعي القرى % % إذا ما جمادى قال لليلة ابردي % % 20(@)(@@) % و لف على خيشومه الكلب مقعيا % % يرى الموت إلا ما استغاث بموقد % PageV01P563 21(@)(@@) % و شد يديه حالب الضرع غامرا % % على مصفر قد مسه الجدب مثمد % 22(@)(@@) % و بات غلام الحي يسند ظهره % من النضد الواهي إلى غير مسند % 23(@)(@@) % هنالك يأوى طارق الليل منهم % إلى كل رطب مثمر النبت مزبد 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms172# % 24(@)(@@) % كريم القرى والوجه ملء جفانه % رحيب الرواق منعم العيش مرفد % 25(@)(@@) % قليل على الكوم الصفايا حنوه % إذا السيف رداهن للساق واليد % 26(@)(@@) % كمثل أبي الذواد لا متعلل % إذا سئل الجدوى ولا بمنكد % 27(@)(@@) % فتى بيته للطارقين وسيفه % لهام العدا والمال للمتزود % 28(@)(@@) % و يوماه إما لاصطباح سلافة % تصفق أو داعي صياح ملدد % 29(@)(@@) % و في بشروط الملك وهو ابن مهده % و سود في خيط التميم المعقد % 30(@)(@@) % و جاد على العلات والعام أشهب % بأحمر من خير الرحال وأسود % PageV01P564 31(@)(@@) % و لم تحتبسه عن مساعي شيوخه % % سنوه التي حلته حلية أمرد % 32(@)(@@) % أناف بجديه وأسند ظهره % إلى جبلين من عفيف ومزيد % 33(@)(@@) % له في ملوك الشرق والغرب منهم % نجوم السماء من ثريا وفرقد % 34(@)(@@) % أيا راكب الوجناء يخبط ليله % % على الرزق لم يقصد ضلالا لمقصد % 35(@)(@@) % ترامت به الآفاق ينشد حظه % % فلم يعطه التوفيق صفحة مرشد % 36(@)(@@) % أنخها تفرج همها بمفرج % و طلق شقاء العيش من بعد واسعد % 37(@)(@@) % ورد جمة الجود التي ما تكدرت % بمن ورد ظل المنى المورق الندى % % 38(@)(@@) % و بت في أمان لأن يسوءك ظالم % علت يده أو أن تراع بمعتدي % % 39(@)(@@) % حماك أبو الذواد مالك أمره % على كل حام منهم ومذود % 40(@)(@@) % أخو الحرب إما محمد يوم أوقدت % و إما شبوب نارها غير محمد % PageV01P565 41(@)(@@) % له الخطوة الأولى إذا السيف قصرت % به ظبتاه فهو يوصل باليد % 42(@)(@@) % إذا ابتدر الغارات كان سهامها % % له من قتيل أو أسير مصفد % 43(@)(@@) % خفيف أمام الخيل رسغ جواده % إذا الخوف أقعى بالحصان المعرد % 44(@)(@@) % و لما كفى الأقران في الروع وارتوت % صوارمه من حاسر ومسرد % 45(@)(@@) % تعرض للأسد الغضاب فلم يدع % طريقا لذي شبلين منها ومفرد % 46(@)(@@) % حماها الفريس أن تطيف بأرضه % % و شردها عن غابها كل مشرد % 47(@)(@@) % و هانت فصارت مضغة لسلاحه % % ممزقة في صعدة أو مهند % 48(@)(@@) % و يوم لقيت الأدرع الجهم واحدا % % جرى ملبد يشتد في إثر ملبد % 49(@)(@@) % نصبت له لم تستعن بمؤازر % عليه ولم تنصر بكثرة مسعد % 50(@)(@@) % وقفت وقد طاش الرجال بموقف % متى تتمثله الفرائص ترعد % PageV01P566 51(@)(@@) % فأوجرته نجلاء أبقت بجنبه % فتوقا إذا ما رقعت لم تسدد % 52(@)(@@) % تحدر منها لبتاه 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms173# وصدره % على ساعد رخو وساق مقيد % 53(@)(@@) % فلم تغنه إذ خان وثبة غاشم % و لم ينتقذه منك إقعاء مرصد % 54(@)(@@) % رأى الموت في كفيك رأي ضرورة % فأورد منه نفسه شر مورد % 55(@)(@@) % و أحرزتها ذكرا يخصك فخره % تناقله الأفواه في كل مشهد % 56(@)(@@) % جمعت الغريبين الشجاعة والندى % % و ما كل مرد للكماة بمرفد % 57(@)(@@) % و قمت بإحكام السيادة ناظما % % عراها فما فاتتك حلة سيد % 58(@)(@@) % أتاني من الأنباء أنك مغرم % بفضل مديحي عارف بتوحدي % % 59(@)(@@) % حبيب إليك أن تزف عرائسي % % عليك تهادى بين شاد ومنشد % 60(@)(@@) % متى ما تجد لي عند غيرك غادة % مخدرة تغبط عليها وتحسد % PageV01P567 61(@)(@@) % فقلت كريم هزه طيب أصله % % و واحد قوم شاقه مدح أوحد % 62(@)(@@) % و ليس عجيبا مثلها عند مثله % إذا هب يقظانا لها بين رقد % 63(@)(@@) % فأرسلتها تلقى إليك عنانها % % و غيرك أعيته فلم تتقود % 64(@)(@@) % لها فارس من وصف مجدك دائس % بأرساغها ما بين طود وفدفد % 65(@)(@@) % يرى كل شيء فانيا ورداؤه % % على عنق باق في الزمان مخلد % 66(@)(@@) % متى تجزها الحسنى بحق ابتدائها % % تزرك بعين تملأ السمع عود % 67(@)(@@) % فوفر على عجز البعول صداقها % % و عرس بها أم البنين وأولد % 68(@)(@@) % و صنها وكرم نزلها إن بيتها % % كبيتك في أفق السماء المشيد % 69(@)(@@) % و كن كعلي أو فكن لي كثابت % وفاء وإعطاء وإن شئت فازدد % PageV01P568 البحر : - 1(@)(@@) % أمنها على أن المزار بعيد % خيال سرى والساهرون هجود % 2(@)(@@) % طوى بارقا طي الشجاع وبارق % خطار يفل القلب وهو حديد % 3(@)(@@) % يجوب الدجى الوحشي والبيد وحده % فكيف وكسر البيت عندك بيد . % 4(@)(@@) % نعم . تحمل الأشواق والعيس ظلع % و يمشي الهوى والناقلات قعود % 5(@)(@@) % و تتسع البلوى فيمضي مصمما % % جبان عن الظل الخفوق يحيد % 6(@)(@@) % من المبلغي والصدق قصد حديثه % و في القول غاو نقله ورشيد % 7(@)(@@) % عن الرمل بالبيضاء هل هيل بعدنا % % و بان الغضا هل يستوي ويميد % 8(@)(@@) % و هل ظبيات بين جو ولعلع % تمر على وادي الغضا وتعود % 9(@)(@@) % سوانح للرامين تصطاد مثلها % % و حوش الفلا وهي الرماة تصيد % 10(@)(@@) % و يوم النقا خالفن منا فعاذل % خلي ومعذول الغرام عميد % PageV01P569 11(@)(@@) % سفكن دما حرا وأهون هالك % دم حكمت عين عليه 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms174# وجيد % 12(@)(@@) % حملن الهوى مني على ضعف كاهل % و هي وتقول الحاملات جليد % 13(@)(@@) % تطلعت الأشراف عيني ريادة % لقلبي سفاها والعيون ترود % 14(@)(@@) % و ما علمت أن البدور برامة % وجوه ولا أن الغصون قدود % 15(@)(@@) % و قالوا غدا ميقات فرقة بيننا % % فقلت لسعد إنه لوعيد % 16(@)(@@) % غدا نعلن الشكوى فهل أنت واقف % تسائل حادي الركب أين يريد % 17(@)(@@) % و هل تملك الإبقاء أو تجحد الهوى % % و وجهك قاض والدموع شهود % 18(@)(@@) % و قد كنت أبكي والفراق دعا به % دلال أداري عطفه وصدود % 19(@)(@@) % فما أنا من بين رجاء إيابه % و عود تقضى دونه وعهود % 20(@)(@@) % هل السابق الغضبان يملك أمره % فما كل سير اليعملات وخيد . % PageV01P570 21(@)(@@) % رويدا بأخفاف المطي فإنما % % تداس جباه تحتها وخدود % 22(@)(@@) % عذيري من الآمال أما ذراعها % % فرحب وأما نيلها فزهيد % 23(@)(@@) % يرينك أن النجم حيث تحطه % % و أن زمام الليث حيث تقود % 24(@)(@@) % و دون حصاة الرمل إن رمتها يد % دفوع وسهم للزمان سديد % 25(@)(@@) % سقى الناس كأس الغدر ساق معدل % متى يبد قبل السكر فهو معيد % 26(@)(@@) % فمستبرد يهني بأول شربة % و مستكثر يثنى له ويزيد % 27(@)(@@) % و نحى ابن أيوب فأصبح صاحيا % وفاء عريق في الوفاء تليد % 28(@)(@@) % فلو لم يبرز يوم كل فضيلة % كفى أنه يوم الحفاظ وحيد % 29(@)(@@) % حواني وأيام الزمان أراقم % و هبهب عني والخطوب أسود % 30(@)(@@) % و لبى دعائي والصدى لا يجيبني % % بيقظته والسامعون رقود % PageV01P571 31(@)(@@) % و أنهضني بالدهر حتى دفعته % % و جانبه وعر علي شديد % 32(@)(@@) % و قد قعدت بي نصرة اليد أختها % % و قلص عني الظل وهو مديد % 33(@)(@@) % كفل لي بالعيش حتى رعيته % على وخم الأيام وهو رغيد % 34(@)(@@) % و أطلق من ساقي حتى أناف بي % % على أربي والحادثات قيود % 35(@)(@@) % فما راعني من عقني وهو واصل % % و لا ضرني من غاب وهو شهيد % 36(@)(@@) % من القوم مدلول على المجد واصل % إذا ضل عن طرق العلاء بليد % 37(@)(@@) % عتيق نجار الوجه أصيد صرحت % به عن صفاياها غطارف صيد % 38(@)(@@) % كرام تضيء المشكلات برأيهم % % و ينظم شمل المجد وهو بديد % 39(@)(@@) % يسود فتاهم في خيوط تميمه % و يشأى كهول الناس وهو وليد % 40(@)(@@) % إذا نزلوا بالأرض غبراء 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms175# جعدة % أماه حصا فيها وطاب صعيد % PageV01P572 41(@)(@@) % كان نصوع الروض حين تسحبت % مازر منهم فوقها وبرود % 42(@)(@@) % سخا بهم أن السخاء شجاعة % و شجعهم أن الشجاعة جود % 43(@)(@@) % لهم بابنهم ما للسحاية أقلعت % من الروض يوم الدجن وهو صخود % % 44(@)(@@) % و ما غاب عن دار العلا شخص هالك % مضى وبنوه الصالحون شهود % 45(@)(@@) % أبا طالب لا يخلف الفخر دوحة % و أنت لها فرع وبيتك عود % 46(@)(@@) % بغى الناس أدنى ما بلغت فطيرت % رياحك عصفا والبغاة ركود % 47(@)(@@) % و شال بك القدح المعلى وحطهم % % و ليس لهاو بالطباع صعود % 48(@)(@@) % فلو كلمتك الشمس قالت لحقت بي % % علاء وإشراقا فأين تريد % 49(@)(@@) % أقر لك الأعداء بالفضل عنوة % و معترف من لم يسعه جحود % % 50(@)(@@) % و كيف يماري في الصباح معاند % و قد فلق الخضراء منه عمود % PageV01P573 51(@)(@@) % تسمع من الحساد وصفك واغتبط % % فأعجب فضل ما رواه نديد % 52(@)(@@) % و إن نكلوا شيئا فإن فصاحتي % % وراءك كنز في الكلام عتيد % 53(@)(@@) % و بين يدي نعماك مني حمية % لها مدد من نفسها وجنود % 54(@)(@@) % إذا رامحت حربا رأيت كماتها % % تلاوذ من أطرافها وتحيد % 55(@)(@@) % أذود بها عن سرح عرضك كلما % % تطلع فيه للفريسة سيد % 56(@)(@@) % إذا نشطت من عقلة الفكر أرسلت % بها طلقات وثبهن شرود % 57(@)(@@) % مطايا لأبكار الكلام إذا مشى % % على حسك السعدان منه رديد % 58(@)(@@) % نطقت بها الإعجاز فالمؤمنون لي % % على دينها بين الجنان خلود % 59(@)(@@) % و يحسدني قوم عليها وحظها % % شقي وحظ المقرفات سعيد % 60(@)(@@) % تمنوا على إخصابهم جدب عيشها % % و أنهم خصوا بها وأفيدوا % % PageV01P574 61(@)(@@) % و لم أحسب البلوى عليها مزاحم % و لا أن ضنك العيش فيه حسود % 62(@)(@@) % لها النسب الحر الصريح إذا طغت % % عليك إماء غيرها وعبيد % 63(@)(@@) % يزورك منها والنساء فوارك % كواعب تصفيك لمودة غيد % 64(@)(@@) % لهن جديد من نوالك كلما % % أتى طالعا يوم بهن جديد % 65(@)(@@) % ففي كل يوم مهرجان مقلد % بهن ونيروز لديك وعيد % PageV01P575 البحر : - 1(@)(@@) % تمناها بجهل الظن سعد % و ما هي من مطايا الظن بعد % 2(@)(@@) % و خال ظهورها قعدا ليانا % % فرحل وهي مزلقة تكد % 3(@)(@@) % و راوحها القعاب ليعتشيها % % فضرع زل أو خلف يند % 4(@)(@@) % براثن أوسقته دما صبيبا % % و في 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms176# قوم لها أقظ وزبد % 5(@)(@@) % لعلك سعد غرك أن تراها % % على الجرات تأكل أو ترد % 6(@)(@@) % و أن العام أخلفها فجاءت % حبائل في حبائلها تمد % 7(@)(@@) % مفللة على الأعطان فوضى % % هببت تظن أن الفل طرد % 8(@)(@@) % و ما يدريك من يحمي حماها % % و يحضر ذائدا عنها وببدو % % 9(@)(@@) % و إن وراءها لقنا تلظى % % و أسيافا وألسنة تحد % 10(@)(@@) % و منتقص الطبائع إن أخيفت % % لشد الأسد أهون ما يشد % % PageV01P576 11(@)(@@) % إذا صاح الإباء به تنرى % % و يطيع الغيظ أغلب مستبد % 12(@)(@@) % و مشحوذا من الكلم المصفى % % به الأعراض تفرى أو تقد % 13(@)(@@) % إذا عصب اللهاة الريق فاضت % % دوافق منه واديها ممد % 14(@)(@@) % تحاشد يعرب ان قال نصرا % % و تغضب بالطباع له معد % 15(@)(@@) % فما لك لا أبالك تتقيها % % و فيها السيف والخصم الألد % 16(@)(@@) % طغى بك أن ونت عنك القوافي % % و خلف فتورها دأب ووخد % 17(@)(@@) % لئن دردت فلا يغررك منها % % أراقم يزدردن وهن درد % 18(@)(@@) % و إن نأت البلاد برافديها % % فقوم آخرون لها ورفد % 19(@)(@@) % و لم يقعد عن المعروف جند % من الكرماء إلا قام جند % 20(@)(@@) % و كم من حاضر دان كفاني % % رجالا لفهم سفر وبعد % PageV01P577 21(@)(@@) % و لم أعدم نوالهم ولكن % % وجوه بعدها ألم ووجد % 22(@)(@@) % سقى الله ابن أيوب سماء % تروح سحابها ملأى وتغدو % % 23(@)(@@) % و إلا ماء خديه حياء % و إلا خلة منه وود % 24(@)(@@) % و أي خلاله كرما سقاه % % كفى و سقى نمير منه عد % 25(@)(@@) % أخوك فلا تغيره الليالي % % إذا لم يرع عند أخيك عهد % 26(@)(@@) % و مولاك الذي لا الغل يسرى % % به ظهرا ولا الأضغان تحدو % % 27(@)(@@) % تضيفه وأنت طريد ليل % رمى بك فيه إقتار وجهد % 28(@)(@@) % و قد ألقت بكلكلها جمادى % % لخيط سمائها حل وعقد % 29(@)(@@) % و هبت من رياح الشام صر % عسوف لم ترضها قط نجد % 30(@)(@@) % و أبواب البيوت مقرنات % فلا نار ولا زاد معد % PageV01P578 31(@)(@@) % تجد وجها يضىء لك الدياجي % % كأن جبينه في الليل زند % 32(@)(@@) % و كفا تهرب الأزمات منها % % ترقرق سبطة والعام جعد % 33(@)(@@) % و بت وقراك ميسرة وبشر % و زادك نخبة وثراك مهد % 34(@)(@@) % تمام الليل واغد بصالحات % من الأخلاق إن تركتك تغدو % % 35(@)(@@) % شمائل أصلها حسب 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms177# وخير % و زهرة فعلها كرم ومجد % 36(@)(@@) % تقبلها أبا قأبا مؤد % كما أخذ العلا إرثا يرد % 37(@)(@@) % تتم به إذا حسب المساعي % % عن الآباء عدة ما يعد % 38(@)(@@) % تفرد بالمحاسن في زمان % تنكر أن يقال البدر فرد % 39(@)(@@) % و جاراه على غرر رجال % لهم شد وليس لهم أشد % 40(@)(@@) % فقصر كل منتفخ هجين % و مرأقب يطوي الشوط نهد % PageV01P579 41(@)(@@) % ثقيل والحلوم مشعشعات % نصيع العرض والأعراض ربد % 42(@)(@@) % ملكت به المنى وعلى الليالي % % ديون بعد لي فيه ووعد % 43(@)(@@) % و كان نوال أقوام ضمانا % % أسوفه وجود يديه نقد % 44(@)(@@) % أحد بنصره نابي حتى % % فرست به الخطوب وهن أسد % 45(@)(@@) % و عاد أشل كف الدهر عني % بأنك لي به سيف وزند % 46(@)(@@) % فلا يعدمك معتمر غريب % له بك أسوة صبر وحشد % 47(@)(@@) % و لا يفقدك منى مستضيء % بهديك في الظلام وأنت رد % 48(@)(@@) % ورد عليك رائحة ثنائي % % عزائب مثلها لك يسترد % 49(@)(@@) % خمائص أو يجدن اليك مرعى % % خوامس أولهن نداك ورد % 50(@)(@@) % حوامل من نتاج الجود ملء ال % % جيوب فمالها شكر وحمد % PageV01P580 51(@)(@@) % من الكلم الذي إن كان حد % لغايات الفصاحة فهو حد % 52(@)(@@) % سبقت به المقاول مستريحا % % ففتهم وقد نصبوا وكدوا % % 53(@)(@@) % تكر عليك واحدة ومثنى % % بهن وفودها ما قام أحد % 54(@)(@@) % ليوم المهرجان وكان عطلا % وشاح من فرائدها وعقد % 55(@)(@@) % سلبت الناس زينتها ضنينا % % بها وبرودها لك تستحد % 56(@)(@@) % عتقني من الحرص اقتناعي % % بما تولى ومولى الحرنقص % PageV01P581 البحر : - 1(@)(@@) % أمكنت العاذل من قيادها % % فانتزع الرحمة من فؤادها % % 2(@)(@@) % و لونت أخلاقها فقد غدا % % بياضها يشف عن سوادها % % 3(@)(@@) % و الغانيات عطفة وصدفة % يجنى لك الحنظل من شهادها % % 4(@)(@@) % لا يملك الراقد من أحلامه % إلا كما يملك من ودادها % % 5(@)(@@) % أعلق ما كنت بها طماعة % أنصل ما تكون من إسعادها % % 6(@)(@@) % متى تكلف من وفاء شيمة % تعد إلى شيمتها وعادها % % 7(@)(@@) % آه على الرقة في خدودها % % لو أنها تسري إلى فؤادها % % 8(@)(@@) % بالبان لي دين على ماطلة % يميس غصن البان في أبرادها % % 9(@)(@@) % سلطت الوجد على جوانحي % % تسلط الخلف على ميعادها % % 10(@)(@@) % يا طربا لنفحة نجدية % أعدل حر القلب باستبرادها % % PageV01P582 11(@)(@@) % و ما الصبا ريحي لولا أنها % % إذا جرت هبت على بلادها % % 12(@)(@@) % قل 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms178# لمخيض العيس أغباس السري % % تأكل عرض البيد في إسآدها % % 13(@)(@@) % موائرا ترى السلام رمضا % بين سلاماها إلى أعضادها % % 14(@)(@@) % ذبالها تحت الدجى عيونها % % لا تستشير النجم في رشادها % % 15(@)(@@) % تبغي الندى وأين من مراده % % طي الفلا وأين من مرادها % % 16(@)(@@) % عندك روض وسحاب مغدق % إن صدقت عينك في ارتيادها % % 17(@)(@@) % أيدي بني عبد الرحيم أبحر % أعذبها الله على ورادها % % 18(@)(@@) % أيد تساوي الجود فيها فاكتفى % % أن يسأل المعتام عن أجوادها % % 19(@)(@@) % سلالة من طينة واحدة % مجموعها يوجد في آحادها % % 20(@)(@@) % ارم بهم على الليالي تنتصف % بهم على ضعفك من شدادها % % PageV01P583 21(@)(@@) % و شمهم على الخطوب تنتضل % بيض السريجيات من أغمادها % % 22(@)(@@) % انظر إليهم في سماوات العلا % % مرفوعة منهم على عمادها % % 23(@)(@@) % تر النجوم الزهر من وجوههم % % ثابتة السعود في أوتادها % % 24(@)(@@) % لهم سناها ثم ما ضرهم % نقصان ما يكثر من أعدادها % % 25(@)(@@) % أسرة مجد شهد الفضل لما % % عقب عنها بعلا أشهادها % % 26(@)(@@) % حسبك من آياتها دلالة % أن كمال الملك من أولادها % % 27(@)(@@) % حي وقرب غرة أبية % كان النوى يألم من بعادها % % 28(@)(@@) % ما سكنت أرض إلى حضورها % % إلا بكت أخرى على افتقادها % % 29(@)(@@) % تود حبات القلوب أنها % % ما سافرت تكون من أرفادها % % 30(@)(@@) % عاد إلى الدولة ظل عزها % % و قرت الأرواح في أجسادها % % PageV01P584 31(@)(@@) % و امتلأت من شهبها أفلاكها % % و ضمت الغيل على آسادها % % 32(@)(@@) % يخطبها قوم وفي حبالكم % % نكاحها وهم بنو سفادها % % 33(@)(@@) % يا عجز من يطمع في قنيصها % % و الليث جثام على مرصادها % % 34(@)(@@) % أنت لها بعد أبيك ثغرة % غيرك لا يكون من سدادها % % 35(@)(@@) % وجهك في ظلمائها سراجها % % و كفك الذائب في جمادها % % 36(@)(@@) % صدعت بالفضل وكنت معجزا % % تطيعك النفوس باجتهاها % % 37(@)(@@) % و أذعنت طائعة مختارة % بميلها إليك وانقيادها % % 38(@)(@@) % إن ضلت الآراء باجتماعها % % كفتك آراؤك بانفرادها % % 39(@)(@@) % أو عبدت أموال قوم شرفت % نفسك أن تكون من عبادها % % 40(@)(@@) % كفتك كسب العز نفس حرة % أحرزت العزة من ميلادها % % PageV01P585 41(@)(@@) % و قدمتك فاجتبيت سيدا % % أرومة طرفك من تلادها % % 42(@)(@@) % تعدي معاليها إلى أبنائها % % على زمان هودها و عادها % % 43(@)(@@) % لكم قدامي الأرض أو سلافها % % كنتم ربا والناس في وهادها % % 44(@)(@@) % و جمة الملك تجم لكم % ما طاب واستغزر من أورادها 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms179# % % 45(@)(@@) % إذا نطقتم سكت الناس لكم % % على قوى الأنفاس وامتدادها % % 46(@)(@@) % كأنما ألسنكم لهاذم % على القنا تشرع في صعادها % % 47(@)(@@) % ميمونة النقبة أين وجهت % حللت المزن عرى مزادها % % 48(@)(@@) % و إن سئلتم لم تروا أموالكم % % نامية إلا على نفادها % % 49(@)(@@) % هنا المعالي منك يا خير أب % يكنى بها جمعك من بدادها % % 50(@)(@@) % ذاك وسل مذ غبت عن نفسي وعن % % ضراعة لم تك في اعتيادها % % PageV01P586 51(@)(@@) % و نبوة الأعين عني فيكم % كأنني صيرت من سهادها % % 52(@)(@@) % أخرت نفسي بل قعدت حجرة % مزملا بالذل في بجادها % % 53(@)(@@) % مخفضا قولي متى قيل صه % خشعت بين هائها وصادها % % 54(@)(@@) % بين رجال كمنت فضائلي % % عنهم كمون النار في زنادها % % 55(@)(@@) % لم أرجهم وليتني لم أخشهم % % قلوبهم تئن من أحقادها % % 56(@)(@@) % تسلقني باللوم فيكم ألسن % أقوالها تصغر في اعتقادها % % 57(@)(@@) % فكيف مع قناعتي ظنك بي % % هل كان إلا المص من ثمادها % % 58(@)(@@) % خلفتني جوهرة ضائعة % بقلة الخبرة من نقادها % % 59(@)(@@) % لا حظ لي أرجوه عند غيركم % % من عدة الدنيا ولا عتادها % % 60(@)(@@) % تسكن أحشائي إلى حفاظكم % % سكون أجفاني إلى رقادها % % PageV01P587 61(@)(@@) % أنتم لنفسي في الحياة وبكم % % أنتظر العون على معادها % % 62(@)(@@) % فأين كان صبركم على النوى % % من عركها الصبر ومن جهادها % % 63(@)(@@) % و هل وقد أمرضها بعادكم % % كنتم بعطف الذكر من عوادها % % 64(@)(@@) % بلى . لقد واصلها ما بلها % % من عون أيديكم ومن إرفادها % % 65(@)(@@) % و قمتم على النوى بلفتة % من نصرها شيئا ومن إنجادها % % 66(@)(@@) % فاغتنموا الآن تلافي نقصها % % في سعة الأيام وازديادها % % 67(@)(@@) % و عند نعماك لها إن قضيت % دين عليه جملة اعتمادها % % 68(@)(@@) % مؤجلا قبل النوى وبعدها % % من طارف الرسوم أو تلادها % % 69(@)(@@) % فوكل الجود على نفسك في % % قضائها ومره بافتقادها % % 70(@)(@@) % و اعلم بأن الحال في تسويفها % % تضيق حتى الوعد في إبعادها % % PageV01P588 71(@)(@@) % و اسلم لها واسع بها سوائرا % % بعفوها منك وباجتهادها % % 72(@)(@@) % لك الطويل الشوط من خيولها % % فليس ترضى لك باقتصادها % % 73(@)(@@) % لها بطون الأرض بل ظهورها % % تصوبت أو هي في إصعادها % % 74(@)(@@) % رجلي ولا يعلقها ركب الفلا % % بإبل البيد ولا جيادها % % 75(@)(@@) % تسترقص الأسماع أو تخالني % % أستخلف الغريض في إنشادها % % 76(@)(@@) % كأنها على الطروس أنجم % لألأت الخضراء باتقادها % % 77(@)(@@) % يكاد أن يبض من نصوعها 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms180# % % ما سود الكاتب من مدادها % % 78(@)(@@) % تنفس الأيام عن صوابها % % في وصف نعماكم وفي رشادها % % 79(@)(@@) % ما دمتم حليا لمهرجانها % % فينا وتيجانا على أعيادها % % PageV01P589 البحر : - 1(@)(@@) % هل تحت ليلك بالغضا من رائد % % يقتاف آثار الصباح الشارد % 2(@)(@@) % هيهات تلك نشيدة ممطولة % عند الغرام على المحب الناشد % 3(@)(@@) % و كفاك عجزا من شجى ساهر % يرجو الزفادة من خلي راقد % 4(@)(@@) % يا إخوة الرجل الغني أصاب ما % % يبغى وأعداء المقل الفاقد % 5(@)(@@) % صاحبت بعدكم النجوم فكلكم % % إلب علي وكلهن مساعدي % % 6(@)(@@) % فإذا ركدن فمن تحير أدمعي % % و إذا خفقن فمن نبو وسائدي % % 7(@)(@@) % دلوا علي النوم إن طريقه % مسدودة بعواذلي وعوائدي % % 8(@)(@@) % و على الثنية باللوى متطلع % طلعي بمربأة الرقيب الراصد % 9(@)(@@) % يقظ إذا خاف الرقيب تخطأت % عيناه عن قلب مريد عامد % 10(@)(@@) % متجاهل ما حال قلبي بعده % % جهل العليم وغائب كالشاهد % PageV01P590 11(@)(@@) % و إلى جنوب البان كل مضرة % بالبان بين موائس وموائد % 12(@)(@@) % يمشين مشى مها الجواء تخللت % عنهن غيطان النقا المتقاود % 13(@)(@@) % متقلدات بالعيون صلائفا % و طلي ولم يحملن ثقل قلائد % 14(@)(@@) % نافثتهن السحر يوم سويقة % فإذا مكايدهن فوق مكايدي % % 15(@)(@@) % كنت القنيص بما نصبت ولم أخل % أن الحبالة عقلة للصائد % 16(@)(@@) % أنكرت حلمي يوم برقة عاقل % و عرفته يوم اللقاء بغامد % 17(@)(@@) % و جعلت سمعي من نبال عواذلي % % غرض الغرور لكل سهم قاصد % 18(@)(@@) % القلب قلبك فامض حيث مضى الهوى % % بك من مضل سعيه أو راشد % 19(@)(@@) % ما دام يدعوك الحسان فتى وما % % دام الذوائب في قراب الغامد % 20(@)(@@) % فوراء يومك من صباك ضخى غد % وعد يسوءك منه صدق الواعد % PageV01P591 21(@)(@@) % و لقد سريت بليله وبصحبه % فحما وفي لهب البياض الواقد % 22(@)(@@) % فإذا المشيب مع الإضاءة حيرة % و إذا الشباب أخو المضل الواجد % 23(@)(@@) % و مطية للهو عز فقارها % % و صليفها عن راكب أو قائد % 24(@)(@@) % مما احتمى من رحله بقماصه % و من الخشاش بأنفه المتصايد % 25(@)(@@) % أعيا على ركب الضبا أن يظفروا % % بمغالق من غرزها ومعاقد % % 26(@)(@@) % قد رضتها فركبت منها طيعا % % ينصاع بين مراسني ومقاودي % % 27(@)(@@) % و أخ رفعت له بحي على السري % % و النجم يسبح في غدير راكد % 28(@)(@@) % فوعى فهب يحل خيط جفونه % بالكره من 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms181# كف النعاس العاقد % % 29(@)(@@) % غيران قام على الخطار مساعدا % % نصر الحسام رفدته بالساعد % 30(@)(@@) % حتى رجمت الليل منه بكوكب % فتق الدجى وأضاء وجه مقاصدي % % PageV01P592 31(@)(@@) % فردين سوم الفرقدين تمايلا % % مستأمنين على طريق واحد % 32(@)(@@) % و محجب تدع الفرائص هيبة % أبوابه من خافق أو راعد % 33(@)(@@) % تتسابق الجبهات دون سريره % للفوز بين معفر أو ساجد % 34(@)(@@) % لا تطمع الأقدار في استنزاله % % بضعائف منها ولا بجلائد % 35(@)(@@) % أذنت عليه وسائلي وترفعت % أستاره لمقاصدي وقصائدي % % 36(@)(@@) % و بعثت غر قلائدي ففتحن لي % % أبوابه فكأنهن مقالدي % % 37(@)(@@) % كعمان أو ملك عمان داره % دانى النوال على المدى المتباعد % 38(@)(@@) % ران علي على ارتفاع سمائه % % بر بوفد مدائحي ومحامدي % % 39(@)(@@) % بعثت بصيرته نفاقي عنده % و الشعر يبضع في أوان كاسد % 40(@)(@@) % و قضى على أني الوحيد بعلمه % فكفى بذلك أنه من شاهدي % % PageV01P593 41(@)(@@) % سبق الملوك فبذهم متمهلا % % جاروا ومر على الطريق القاصد % 42(@)(@@) % و مضى على غلوائه متسنما % % لم ترتفق مسعاته بمعاضد % 43(@)(@@) % طيان لم يقض البوازل قبله % % جذع ولم يطل القيام بقاعد % 44(@)(@@) % نسب السماء يريد أين فخارها % % منه فباهلها بفخر زائد % 45(@)(@@) % و سما يماجد قومه بنجومها % % فثنى ولم يظفر بنجم ماجد % % 46(@)(@@) % غرس المعالي مكرم في تربها % % فجنت حلاوة كل عيش بارد % 47(@)(@@) % حجرا على الأقدار فيما نفذت % أحكامها من صادر أو وارد % 48(@)(@@) % لن تعدم الآفاق نجما طالعا % % منها ينور إثر نجم خامد % 49(@)(@@) % فالسيف منهم في يمين المنتضى % % كالسيف منهم في يمين الغامد % 50(@)(@@) % هم ما هم . وتفرقت آياتهم % % في المجد ثم تجمعت في واحد % PageV01P594 51(@)(@@) % أحيت لهم أيام محي الأمة ال % % عافي وهبت بالرقود الهاجد % 52(@)(@@) % و تسنمت درج السماء بذكرهم % % أيام آثار لهم ومشاهد % 53(@)(@@) % و إلى يمين الدولة افتقرت يد % في الملك لم تعضد سواه بعاضد % 54(@)(@@) % نظم السياسة مالك أطرافها % % لم تستعن عزماته بمرافد % 55(@)(@@) % و أقام ميل الدولتين مؤدب % بثقافه خطل الزمان المائد % 56(@)(@@) % سبق الرجال بسعيه وبقومه % % و المجد بين مكاسب وموالد % 57(@)(@@) % جرت البحار فما وفت بيمينه % % فكأن ذائبها يمد بجامد % 58(@)(@@) % ضنت يجوهرها وما في حرزها % % من منفسات ذخائر وفوائد % 59(@)(@@) % فاستخرجتها كفه وسيوفه % % فسخت بها لمؤمل ولرافد % 60(@)(@@) % نام الرعاة عن البلاد وأهلها % % عجزا 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms182# وعيناه شهابا واقد % PageV01P595 61(@)(@@) % و حمى جوانب سرحه متنصف % للشاء من ذئب الغضا المستاسد % 62(@)(@@) % و إذا الأسود شممن ريح عرينه % % كانت صوارمه عصي الذائد % % 63(@)(@@) % ما بين سربزة إلى ما يستقي % % وادي الأبلة هابطا من صاعد % 64(@)(@@) % يقظان يضرب وهو غير مبارز % عزما ويطعن وهو غير مطارد % 65(@)(@@) % كف له تحمي وسيف ينتضى % % و لحاظ راع للرعية راصد % 66(@)(@@) % و إذا بغى باغ فبات يرومه % % باتت صوارمه بغير مغامد % % 67(@)(@@) % و مطوح ركب الخطار فرده % % أعمى تحير ماله من قائد % 68(@)(@@) % كف الرعاع وجاء يطلب حاجة % عسراء في كف الهمام اللابد % % 69(@)(@@) % يرمي الكواكب وهي سعد كلها % % بمناحس من جده ومناكد % 70(@)(@@) % جنت به الأطماع فاستغوى بها % % يصبو إلى شيطانها المتمارد % PageV01P596 71(@)(@@) % خبرته يبغى عمان وأهلها % % فعرفت مصدره بجهل الوارد % 72(@)(@@) % لم ينجه والموت في حيزومه % % ما ضم من حفل له ومحاشد % 73(@)(@@) % جمحت به غرارة من حينه % % قذفته في لهوات صل زارد % 74(@)(@@) % نسفت بأطراف الرماح جنوده % طوح السنابل عن شفار الحاصد % 75(@)(@@) % من راكب وفؤاده من صخرة % جوفاء أم فواقر وأوابد % 76(@)(@@) % حدباء تسلك من عثار طريقها % % حدبا ذوات نواقص وزوائد % 77(@)(@@) % فتظل طورا غي عنان سمائها % % صعدا وطورا في الحضيض الهامد % 78(@)(@@) % تختب قامصة ولم تطأ الثرى % % و تظل لا في سبسب وفدافد % 79(@)(@@) % يظما بها الركبان وهي سوابح % في غامر تياره متراكد % 80(@)(@@) % شنعاء لو طرق الخيال بمثلها % % عيني لما أطبقت مقلة راقد % PageV01P597 81(@)(@@) % بلغ وليت رسائلي تقتصها % % شفتى وغائبي المؤخر شاهدي % % 82(@)(@@) % أو ليت قلبي كان قلبك أصمعا % في أضلع صم العظام أجالد % 83(@)(@@) % فأخوض بحرا من حميم آجن % يفضي إلى البحر الزلال البارد % 84(@)(@@) % قل إن وصلت لناصر الدين استمع % % فقرا تجمع كل أنس شارد % 85(@)(@@) % يا خير من حملت ظهور صواهل % في الملك أو ضمت صدور وسائد % 86(@)(@@) % و تعضبت بالنور فوق جبينه % % عذب اللواء تحف تاج العاقد % % 87(@)(@@) % أنا عبد نعمتك التي شكرت إذا % % ما نعمة نيطت بآخر جاحد % 88(@)(@@) % أغنيتني عن كل مذموم الجدا % % ألقاه مضطرا بوجه حامد % 89(@)(@@) % و نفضت عن ظهري بفضلك ثقل ما % % أوعيت من نوب علي شدائد % 90(@)(@@) % كان الزمان يسر لي ضغنا فقد % % أصلحت لي 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms183# قلب الزمان الفاسد % % PageV01P598 91(@)(@@) % و حفظت في تكرما وتفضلا % % ما أذكرتك قدائمي وتلائدي % % 92(@)(@@) % ذمم لو اعتم العداة بمثلها % % عقدوا بهن لديك خير معاقد % 93(@)(@@) % و من الذي يرعى سواك لنازح % % عن لحظه نائي المحل مباعد % 94(@)(@@) % متناقص الخطوات عنك ذكرته % في سكرة الملك العظيم الزائد % 95(@)(@@) % أوليتني في ابني ونفسي خير ما % % أوليت في ولد شفاعة والد % 96(@)(@@) % فلذاك كر على مشقة طرقه % و كررت أطلب من نداك عوائدي % % 97(@)(@@) % تعطى المنى ونعود نسأل ثانيا % % فتعود حبا للسماح العائد % 98(@)(@@) % و تموت حاجتنا وينفد فقرنا % % و سؤالنا ونداك ليس بنافد % 99(@)(@@) % فاحكم بسنتك التي شرع الندى % % لك شرعها حكم القدير الواحد % % 100(@)(@@) % كفل علاك بحاجتي واكفف يدي % % عن كل جعد الكف جعد الساعد % PageV01P599 101(@)(@@) % فالناس غيرك من تضيق مجالتي % % فيه وتقتل بالمطال مواعدي % % 102(@)(@@) % صن عنهم شفتي ودعني واحدا % % في الدهر أشرب من قليب واحد % 103(@)(@@) % حاشا لمجدك أن تسدد خلتي % % بمشارك لك في أو بمساعد % 104(@)(@@) % و انصت لها غررا لمدحك وحده % % ينظمن بين قلائد وفرائد % 105(@)(@@) % من كل مخلوع لصادق حسنها % % فيها عذار العابدين لعابد % 106(@)(@@) % عذراء مفضوض لديك ختامها % % ما كل عذراء تزف بناهد % 107(@)(@@) % تجلو عليك بيوتها ما أنشدت % حوراء ذات وشائح وقلائد % 108(@)(@@) % كعقلية الحي الحلول تمشت ال % % خيلاء بين وصائف وولائد % 109(@)(@@) % مما سبقت بخاطري أماتها % % و حويته برقاي أو بمكايدي % % 110(@)(@@) % خضع الكلام لمعجزي في نظمها % % فعنا لها من راكع أو ساجد % PageV01P600 111(@)(@@) % قد آمن الشعراء بعد فسوقهم % % بدلائلي في فضلها وشواهدي % % 112(@)(@@) % و أطاع كل منافق إن سره % % أو ساءه وأقر كل معاند % 113(@)(@@) % فاعطف لمهديها وحامل تربها % % و احمل له حق السفير الرائد % 114(@)(@@) % و اردده عن عجل كما عودته % % برواجع من نعمتيك ردائد % 115(@)(@@) % و اشدد يدا بالخافقين مملكا % % عنقيهما من أتهم ونجائد % 116(@)(@@) % في دولة أخت السعود وعزة % أم النجوم وعمر ملك خالد % PageV01P601 البحر : - 1(@)(@@) % تهوى وأنت محلأ مصدود % ماء النقيب وإنه مورود % 2(@)(@@) % و يقر عينك والوصال مصوح % غصن يرف على الحمى ويميد % 3(@)(@@) % و إذا رغبت إلى السحاب فحاجة % لك ما يصوب على الغضا ويجود % 4(@)(@@) % ما ذاك إلا أن عهدك لم يحل % أفما لحي في 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms184# النخيل عهود % 5(@)(@@) % و من الشقاوة حافظ متجنب % يقضي عليه غادر مودود % 6(@)(@@) % قسما ولم أقسم بسكان الحمى % % عن ريبة لكنه تأكيد % 7(@)(@@) % لهم وإن منعوا مكان مطالبي % % و هم وإن كرهوا الذين أريد % 8(@)(@@) % أتنسم الأرواح وهي رواكد % منهم وتجدب أرضهم فأرود % 9(@)(@@) % و أكذب الواشي إلي بغدرهم % % و على الحديث دلائل وشهود % 10(@)(@@) % فهم الصديق ولا مودة عندهم % % و هم الأقارب والمزار بعيد % PageV01P602 11(@)(@@) % و بأيمن العلمين من أبياتهم % % ظبي يصاد الظبي وهو يصيد % 12(@)(@@) % لاه إذا جمع الرجال حلومهم % % حل العزائم خصره المعقود % 13(@)(@@) % يرمي القلوب وما دم بمطوح % ما لم ترقه مقلة أو جيد % 14(@)(@@) % وعد الوفاء وليس منه فغرني % % و من السراب إذا اغتررت وعود % 15(@)(@@) % أعنو له وأنا العزيز بنفسه % % و ألين عمدا والفؤاد جليد % 16(@)(@@) % و إذا عزفت فتبت من دين الهوى % % جذب الغرام بمقودي فأعود % 17(@)(@@) % و لقد أحن إلى زرود وطينتي % % من غير ما فطرت عليه زرود % 18(@)(@@) % و يشوقني عجف الحجاز وقد ضفا % % ريف العراق وظله الممدود % 19(@)(@@) % و يطرب الشادي فلا يهتزني % % و ينال مني السائق الغريد % 20(@)(@@) % ما ذاك إلا أن أقمار الحمى % % أفلاكهن إذا طلعن البيد % PageV01P603 21(@)(@@) % طفق العذول وما ارتفدت برأيه % % فيهن يبدئ ناصحا ويعيد % 22(@)(@@) % فأنا الذي صدع الهوى في أضلعي % % ما لا يلم العذل والتفنيد % 23(@)(@@) % يا صاح هل لك من خليل مؤثر % راض بأن يشقى وأنت سعيد % 24(@)(@@) % متقلقل حتى تقر وربما % % بقى رقادك ساهر مجهود % 25(@)(@@) % يلقى القواذع أو يقيك لسانه ال % % مشهور فيك وعزمه المشدود % 26(@)(@@) % كذبالة المصباح أنت بضوئها % % في الليلة الظلماء وهي وقود % 27(@)(@@) % من دون عرضك نثلة منضوضة % % منه وإن لم يقضها داود % 28(@)(@@) % قل الثقات فإن علقت بواحد % فاشدد يديك عليه فهو وحيد % 29(@)(@@) % لا يبعد الله الألى حفظ العلا % % بيت لهم حول النجوم مشيد % 30(@)(@@) % و إذا اقشعر العام أغدق من ندى % % أيديهم الوادي ورف العود % PageV01P604 31(@)(@@) % و إذا سرى نقص القبائل أقبلت % تنمى المكارم فيهم وتزيد % 32(@)(@@) % لا يعدم الجود الغريب ومنهم % شخص على وجه الثرى موجود % 33(@)(@@) % بيت بنو عبد الرحيم طنوبه % و أبوهم ساق له وعمود % 34(@)(@@) % تطغى رياح البر فيه عواصفا % % و 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms185# لها بأثناء البيوت ركود % 35(@)(@@) % من حوله غرر لهم وضاحة % تبيض منهن الليالي السود % 36(@)(@@) % و إذا أناخ به الوفود رأيتهم % % كرما قياما والوفود قعود % 37(@)(@@) % فإذا أردت طروقه لملمة % فأبو المعالي بابه المقصود % 38(@)(@@) % جاراهم فأراك غائب أمسهم % % رؤيا الزيادة يومه المشهود % 39(@)(@@) % و مضى يريد النجم حتى جازه % % شوطا فقال النجم أين تريد % 40(@)(@@) % شرف كمال الملك في أطرافه % % حام عن الحسب الكريم يذود % PageV01P605 41(@)(@@) % فصح البوازل وهو قارح عامه % % و أجاب داعي الشيب وهو وليد % 42(@)(@@) % يقظان يقدح في الخطوب بعزمة % تسري به وبنو الطريق هجود % 43(@)(@@) % عشق العلا وسعى فأدرك وصلها % % متروحا وحسوده مكدود % 44(@)(@@) % و وفى بأشراط الكفاية داخلا % % من بابها ورتاجها مسدود % 45(@)(@@) % عبق بأرواح السيادة عطفه % % فكأنه في حجرها مولود % 46(@)(@@) % لو طاول الغمر المغفل خلقه % % شيئا تعلم منه كيف يسود % 47(@)(@@) % هش لصدر اليوم إما ماله % فيه وإما قربه المنقود % 48(@)(@@) % لا قبل نائله إذا سئل الندى % % وعد ولا قبل اللقاء وعيد % 49(@)(@@) % و إذا الخلال الصالحات تكاملت % فهي الشجاعة أو أخوها الجود % 50(@)(@@) % أفنى الثراء على الثناء وعلمه % أن الفناء مع الثناء خلود % PageV01P606 51(@)(@@) % و لربما بلي البخيل بموقف % يخزيه فيه ماله المعبود % 52(@)(@@) % لك من خلائقه إذا مارسته % % جنبان ذا سهل وذاك شديد % 53(@)(@@) % فمع الحفيظة قسوة وفظاظة % حتى كأن فؤاده جلمود % 54(@)(@@) % و مع المودة هزة وتعطف % فتقول غصن البانة الأملود % 55(@)(@@) % يا أسرة المجد التي لم تنتبه % عن مثلها الأيام وهي رقود % 56(@)(@@) % كفي الزمان العين في أعيانكم % % إن الزمان عليكم محسود % 57(@)(@@) % لولاكم نسي الثناء ولم يكن % % في الناس لا رفد ولا مرفود % 58(@)(@@) % و لكان قل الفضل أو ميسوره % يفنى فناء كثيره ويبيد % 59(@)(@@) % بكم رددت يد الزمان وباعه % متوسع بمساءتي ممدود % 60(@)(@@) % و حملت مضعوفا ثقائل خطبه % % و هي التي توهي القوى وتؤود % PageV01P607 61(@)(@@) % و خلطتموني بالنفوس فمن يقع % جنبا فإني منكم معدود % 62(@)(@@) % و إذا تلون معشر بتلون ال % % دنيا فعهدي فيكم المعهود % 63(@)(@@) % و عنيت أنت بخلتي فسددتها % % و نظمتها بالجود وهي بديد % 64(@)(@@) % و إذا تقاعد صاحب عن نصرتي % % فالنصر حظى منك والتأييد % 65(@)(@@) % فلأجزيتك خير ما جازى امرؤ % وجد المقال فقال وهو 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms186# مجيد % 66(@)(@@) % مما يخال قوافيا ومعانيا % % بالسمع وهو حبائر وبرود % 67(@)(@@) % و يكون زاد السفر في ليل الطوى % % و يقاد تتبعه المهاري القود % 68(@)(@@) % من كل مخلوع عذار محبها % % فيها ومعذور بها المعمود % 69(@)(@@) % و كأنها بين الشفاه قصائدا % فوق النحور قلائد وعقود % 70(@)(@@) % عذراء تحسدها إذا أنصفتها % % أوقاتها منك الكعاب الرود % PageV01P608 71(@)(@@) % يحتثها شوقا لك النيروز أو % % يأتي فيطلعها عليك العيد % 72(@)(@@) % لك من بشائرها الخلود ودولة % تمضي بها الأيام ثم تعود % 73(@)(@@) % ما أحسب الدنيا تطيب وأمرها % % إلا إلى تدبيركم مردود % 74(@)(@@) % فبقيتم والحاسدون علاكم % لا خير فيما ليس فيه حسود % PageV01P609 البحر : - 1(@)(@@) % أنشد من عهد ليلى غير موجود % و أقتضيها معارا غير مردود % 2(@)(@@) % رضا بليلي ما كان من خلق % جعد ونيل كثير المن معدود % 3(@)(@@) % من العزيزات أنسابا وأخبية % في صفوة البيت حلت صفوة البيد % 4(@)(@@) % محبها قد قضى في كل معركة % قصية عن بلاغ الأنيق القود % 5(@)(@@) % تقل من غير ذل عند أسرتها % % بين القباب المنيعات الأباديد % 6(@)(@@) % كم ليلة قد أرتني حشوها قمرا % % وجوهها البيض في أبياتها السود % 7(@)(@@) % من كل هيفاء إلا الردف تحسبه % غصنا من البان معقودا بجملود % 8(@)(@@) % ما مستقيماتها للريح مائلة % لكن براهين عز لي المواعيد % 9(@)(@@) % لثن العناقيد فوق الخمر واختلفت % % شفاههن على ماء العناقيد % 10(@)(@@) % و رحن يرمين بالألحاظ مقتنصا % فما تصيدن إلا نفس الصيد % PageV01P610 11(@)(@@) % يا ليل لو كان داء تقتلين به % % داويته كان داء غير مقصود % % 12(@)(@@) % اليأس أروح لي والصبر أرفق بي % % من نوم ليلك عن همي وتسهيدي % % 13(@)(@@) % ما ماء دجلة ممزوجا بغدركم % و إن شفى باردا عندي بموردو % 14(@)(@@) % و لا صبا أرضكم هبت تروحني % % وفاء وعد لكم بالمطل مكدود % 15(@)(@@) % حسبي . سمحت بأخلاقي فما ظفرت % % في الناس إلا بأخلاق مناكيد % 16(@)(@@) % و صاحب لين أيامي وشدتها % % فرق له بين تقريبي وتبعيدي % % 17(@)(@@) % يمشي ابن دأية في ظل الرجاء معي % % و في النوائب يعدو عدوة السيد % 18(@)(@@) % و واسع الدار عالي النار يوهمني % % خصب القرى بين مبثوث ومنضود % % 19(@)(@@) % يهوى الأناشيد أن يكذبن سمعته % % و لا يهش لأعواض الأناشيد % 20(@)(@@) % أغشاه غشيان مجلوب يغر بما % % رأى وأصرف عنه صرف مطرود % PageV01P611 21(@)(@@) % يجود ملء 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms187# يدي بالوعد يمطله % و المطل من غير عسر آفة الجود % 22(@)(@@) % فدى الرجال وإن ضنوا وإن سمحوا % % فتى يهون عليه كل موجود % 23(@)(@@) % لا يحسب المال إلا ما أفاد به % % ثناء محتسب أو ذكر محمود % 24(@)(@@) % كم جرب المدح أملاكا وجربه % % فصب ماء وحتوا من جلاميد % 25(@)(@@) % أملس لا عرضه الوافي بمنتقص % يوما ولا ماله الواقي بمعبود % 26(@)(@@) % من سائل بالكرام السابقين مضوا % % و خلفوا الذكر من إرث وتخليد % 27(@)(@@) % هذا الحسين فخذ عينا ودع خبرا % من الروايات عنهم والأسانيد % 28(@)(@@) % من ساكني الأرض قبل الماء من قدم % و عامريها وما ذلت لتشييد % 29(@)(@@) % كم حامل منهم فضلا حمائله % تحل عن عاتق بالتاج معقود % 30(@)(@@) % لم يبرحوا أجبل الدنيا وأبحرها % % أصلين من شاهق منها وممدود % PageV01P612 31(@)(@@) % و حسنوا في الندى أخلاق حلمهم % إن الندى في النهى كالماء في العود % 32(@)(@@) % يا آل عبد الرحيم اختار صحبتكم % % تأنقي في اختياراتي وتجويدي % % 33(@)(@@) % أحبكم وتحبوني وما لكم % فضل ورب ودود غير مودود % 34(@)(@@) % قرابة بيننا في فارس وصفت % عني وعنكم طهارات المواليد % 35(@)(@@) % لا زال مدحي ميراثا يقابلكم % % عني إذا الشعر في آذانكم نودي % % 36(@)(@@) % بكل حسناء لو أحفشتها برزت % للخاطبين بروز الغادة الرود % 37(@)(@@) % من نسج فكري ترد العار دونكم % رد السهام نبت عن نسج داود % 38(@)(@@) % ما أنبتت لي جراء الرجاء بكم % % خصبا وما كر دهر عودة العيد % 39(@)(@@) % و ما تباح المدى مشحوذة أبدا % % صبيحة النحر من نحر ومن جيد % PageV01P613 البحر : - 1(@)(@@) % أنذرتني أم سعد أن سعدا % % دونها ينهد لي بالشر نهدا % % 2(@)(@@) % غيرة أن تسمع الشرب تغنى % باسمها في الشعر والأظعان تحدى % % 3(@)(@@) % قلت يا للحب من ظبي رخيم % % صدته فاهتجت ذؤبانا وأسدا % % 4(@)(@@) % ما على قومك أن صار لهم % % أحد الأحرار من أجلك عبدا . % 5(@)(@@) % و على ذي نظرة غائرة % بعثت سقما إلى القلب تعدى . % 6(@)(@@) % قتلت حين أصابت خطأ % و قصاص القتل للقاتل عمدا % % 7(@)(@@) % أتراني طائعا أضرمتها % % حرقا تأكل كل أضلاعي ووجدا . % 8(@)(@@) % سببت لي فيك أضغان العدا % % نظرة أرسلتها تطلب ودا % % 9(@)(@@) % و على ما صفحوا أو نقموا % % ما أرى لي منك يا ظبية بدا % % 10(@)(@@) % أجتلي البدر فلا أنساك وجها % % و 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms188# أرى الغصن فلا أسلاك قدا % % PageV01P614 11(@)(@@) % فإذا هبت صبا أرضكم % حملت ترب العضا باناو رندا % % 12(@)(@@) % لام في نجد وما استنصحته % بابلي لا أراه الله نجدا . % 13(@)(@@) % لو تصدى رشأ السفح له % % لم يلم فيه ولو جار وصدا % % 14(@)(@@) % يصل الحول على العهد وما % % أنكر التذكار من قلبي عهدا % % 15(@)(@@) % أفيروى عندكم ذو غلة % عدم الظلم فما يشرب بردا % % 16(@)(@@) % رد لي يوما على كاظمة % إن قضى الله لأمر فات ردا % % 17(@)(@@) % و حماني من زمان خابط % أبدا في عطني شلا وطردا % % 18(@)(@@) % كلما أبصر لي تامكة % كدها أو ردها عظما وجلدا % % 19(@)(@@) % يصطفى الأكرم فالأكرم من % % نخبي أنفس ما كنت معدا % % 20(@)(@@) % كلما شدت بظهري هجمة % ركب الشر لها ركضا وشدا % % PageV01P615 21(@)(@@) % واقعا في كل من كثرني % % بيد خرقاء أو أصبحت فردا % % 22(@)(@@) % أكلة الصعلوك لا أسند ظهرا % % في الملمات ولا أشد عضدا % % 23(@)(@@) % غاب أنصاري فمن شاء اتقاني % % حذر الإثم ومن شاء تعدى % % 24(@)(@@) % شقيت من بعدهم نفسي وهم % % أي برج نزلوه كان سعدا % % 25(@)(@@) % قل لأملاك نأى عني بهم % % ناقل الأقمار قربا ثم بعدا % % 26(@)(@@) % يا سيوفي يوم لا أملك عزا % % و عيوني يوم لا أورد عدا % % 27(@)(@@) % و شبابي إن دنوتم كان غضا % % و إذا رحتم مع البين استردا % % 28(@)(@@) % عجبا لي كيف أبقى بعدكم % % غير أن قد خلق الإنسان جلدا . % 29(@)(@@) % غلب الشوق فما أحمل صبرا % % و جفا الناس فما أسأل رفدا % % 30(@)(@@) % أنا من أغراسكم فانتصروا لي % % قبل أن تهشمني الأيام حصدا % % PageV01P616 31(@)(@@) % يا رسولي ومتى تبلغ فقل % خير ما حمل مأمون فأدى % % 32(@)(@@) % يا كمال الملك يا أكرم من % % يممته ظعن الآمال تحدى % % 33(@)(@@) % يا شهابا كلما قال العدا % % كاد يخبو زاده الرحمن وقدا % % 34(@)(@@) % يا حساما كلما ثلمه الض % % رب راق العين إرهافا وحدا % % 35(@)(@@) % ما براك الله إلا آية % فتن الناس بها غيا ورشدا % % 36(@)(@@) % و ثبات الليث إن أنكر في % % شدة كان مع الأخرى أشدا % % 37(@)(@@) % كلما عاند فيها حاسد % ظهرت باهرة من يتحدى % % 38(@)(@@) % و لكم أنشرت إعجازا بها % % من فعال طويت لحدا فلحدا % % 39(@)(@@) % و بخيل خامل أعديته % % كرما نال به الحمد ومجدا % % 40(@)(@@) % و زليق منتهى شاهقة 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms189# % حيث لا يصعد إلا من تردى % % PageV01P617 41(@)(@@) % طأمن الجو لها وانحدرت % % قلل الأجبال حتى كن وهدا % % 42(@)(@@) % حرص الكوكب أن يطلعها % % فهوى عنها وما سد مسدا % 43(@)(@@) % و إذا الكيد مشى يسمتها % % طامعا عاد وقد خاب وأكدى % % 44(@)(@@) % خف من خطوك فيها ناهض % لم يسر في التيه إلا سار قصدا % % 45(@)(@@) % يأخذ المجلس من ذروتها % % مالكا تدبيرها حلا وعقدا % % 46(@)(@@) % طرت فيها والعدا واقعة % تأكل الأيدي لها غيظا وحقدا % % 47(@)(@@) % يلعن الناس على عجزهم % و تحيا بالمساعي وتفدى % % 48(@)(@@) % فرعت للمجد منكم دوحة % كنت من أنضرها عودا وأندى % % 49(@)(@@) % تربة بورك في صلصالها % % أنجبتكم والدا طاب وولدا % % 50(@)(@@) % طينة أعجب بها مجبولة % أخرجت سلمى وثهلان وأحدا % % PageV01P618 51(@)(@@) % يا عيون الدهر لا زالت بكم % % قذيات أعين الحساد رمدا % % 52(@)(@@) % و تقاضى الملك عنكم بسيوف % منذ سلت لم تكن تشتاق غمدا % % 53(@)(@@) % كلما سوند منكم بأخيه % صارم يمم أمضى وأحدا % % 54(@)(@@) % و بقيتم لبقايا كرم % بكم يلحم في الناس ويسدى % % 55(@)(@@) % لم تكن لولاكم أرماقها % % أثرا يخفى ولا عينا تبدى % % 56(@)(@@) % يا نجومي لا يرعني منكم % غائر باخ ولا حيدان ندا % % 57(@)(@@) % نوروا لي واسرجوا في طرقي % % أقطع الأرض بكم جمزا ووخدوا % % 58(@)(@@) % أجمع الحصباء في مدحكم % بلساني وأعد الرمل عدا % % 59(@)(@@) % و كما أرغمت من قبل بكم % % آنفا آبية أجدع بعدا % % 60(@)(@@) % أبدا أنصب نفسي دونكم % % علما فردا وخصاما ألدا % % PageV01P619 61(@)(@@) % غير أني منك يا بحر الندى % % أشتكي حظي فقد خاب وأكدى % % 62(@)(@@) % عادة تمنع أو تقطع بتا % % و حقوق وجبت تهمل جدا % % 63(@)(@@) % و وعود يجمح المطل بها % % أن يرى ميقاتها عندك حدا % % 64(@)(@@) % بعد أن قد كنت أحفاهم وفاء % لي وأوفاهم لما أسلفت عهدا % % 65(@)(@@) % حاش للسحب التي عودتها % % منك أن يروى بها الناس وأصدى % % 66(@)(@@) % نفثة من مذكر لم يأل في الص % % بر للحاجة والأوطار جهدا % % 67(@)(@@) % بعث النيروز يستعجلكم % % سائلا في الوعد أن يجعل نقدا % % 68(@)(@@) % و هو اليوم الذي من بعده % % سوف تفنون مدى الأيام مدا % % 69(@)(@@) % فاقبلوه شافعا وارضوا به % % زائرا عني بالشعر ووفدا % % 70(@)(@@) % أنتم أكرم من يهدى له % % و القوافي خير ما يحبى ويهدى % % PageV01P620 البحر : - 1(@)(@@) % صدت بنعمان على طول الصدى % % دعها فليس كل 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms190# ماء موردا % % 2(@)(@@) % لحاجة أمس من حاجاتها % % تخطأت أرزاقها تعمدا % % 3(@)(@@) % ترى وفي شروعها ضراعة % حرارة على الكبود أبردا % % 4(@)(@@) % عادة عز جذبت بخطمها % % و كل ذي عز وما تعودا % % 5(@)(@@) % لا حملت ظهورها إن حملت % رجلا على الضيم تقر أويدا % % 6(@)(@@) % إن لم يلقها جانب مقارب % فارم بها الجنب العريض الأبعدا % % 7(@)(@@) % خاطر ولو أردى الخطار إنه % % لا يأمن الذلة من خاف الردى % % 8(@)(@@) % لا يحرز الغاية إلا بائع % بغلظة العيش الرقيق الرغدا % % 9(@)(@@) % يطوى الفلا لا يستضيف مؤنسا % % و الليل لا يسأل نجما مرشدا % % 10(@)(@@) % إذا رأى مطعمة خافضة % عوذ بالله ومال الحيدا % % PageV01P621 11(@)(@@) % يعطى جذاب الشهوات عنقا % شمساء لا تعرف إلا الصيدا % % 12(@)(@@) % تمارس الأيام منه كلما % % حارن أو لج غلاما نكدا % % 13(@)(@@) % يعزف إلا عن فكاهات الهوى % % و قد رأى فيه الحبيب المسعدا % % 14(@)(@@) % أقسم بالعفة لا تيمه % ظبي رنا أو غصن تأودا % % 15(@)(@@) % و لا قرى صبابة فؤاده % % إلا السلو حاضرا والجلدا % % 16(@)(@@) % شأنك يا بن الصبوات فالتمس % غيري أخا لست لهن ولدا % % 17(@)(@@) % مولاك من لا يخلق الشوق له % % وجدا ولا طول البعاد كمدا % % 18(@)(@@) % كأنما يشهد من عفافه % % على المشيب يافعا وأمردا % % 19(@)(@@) % موقرا متعظا شبابه % كأنما كان مشيبا أسودا % % 20(@)(@@) % تحسبه نزاهة وكرما % و مجد نفس بابن أيوب اقتدى % % PageV01P622 21(@)(@@) % فدى عميد الرؤساء مصفر % لو طاب لا يصلح إلا للفدى % % 22(@)(@@) % يرضى بما ساق إليه غلط ال % % حظ ولم يسع له مجتهدا % % 23(@)(@@) % يعجب من جهالة الأيام في % % وجدانه ما لم يكن لينشدا % % 24(@)(@@) % تحسبه جاء يريد غيره % % فضل عن طريقه وما اهتدى % % 25(@)(@@) % و حاسد فخاره مع نقصه % في الناس أن عادى العلا وحسدا % % 26(@)(@@) % تلهب نار الغيظ في ضلوعه % % جمرا يقول حرها لا بردا % % 27(@)(@@) % زال بنصر مجده غيران ما % % نازل إلا ظافرا مؤيدا % % 28(@)(@@) % مد إلى أخذ العلا فنالها % % يدا تبوع ساعدا وعضدا % % 29(@)(@@) % تقضي له الأقلام من حاجاتها % % ما استقضت الذابل والمهندا % % 30(@)(@@) % ما زال يرقى في سماوات العلا % % بروجها الأسعد ثم الأسعدا % % PageV01P623 31(@)(@@) % مصاعدا نجومها حتى إذا % % تطاولت خلفها وصعدا % % 32(@)(@@) % رأى المعالي بالمساعي تقتضى % % و الشرف المحرز من كسب الندى % % 33(@)(@@) % فصاعب الأسود في أغيالها % % صرامة وجاود الغيث 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms191# جدا % % 34(@)(@@) % و كلما قيل له قف تسترح % جزت المدى قال وهل نلت المدى % % 35(@)(@@) % ناهض ثقل الدولتين فكفى ال % % ملك الطريف ما كفاه المتلدا % % 36(@)(@@) % و كان للأمرين منه جنة % مسرودة وصارما مجردا % % 37(@)(@@) % فاغترس القادر يوم نصره % و استثمر القائم بالأمر غدا % % 38(@)(@@) % قام بأمر جامع صلاحه % فضمه بنفسه منفردا % % 39(@)(@@) % فلست أدري ألوحي هابط % % أم اختيارا لقباه الأوحدا % % 40(@)(@@) % وزارة وفرها لدسته % أن أباه قبل فيه استندا % % PageV01P624 41(@)(@@) % دبرها مستبصرا فلم يكن % % مفوصا فيها ولا مقلدا % % 42(@)(@@) % يسند عن آبائه أخبارها % % صادقة إذا اتهمت المسندا % % 43(@)(@@) % و أعتق الناس بها من لم يزل % % مكررا في بيتها مرددا % % 44(@)(@@) % يا من مخضت الناس فاستخلصته % بعد اجتهادي فاليا منتقدا % % 45(@)(@@) % و البازل العود وقد نبذتهم % % بكية معرورة أو نقدا % % 46(@)(@@) % ذللت أيامي واستقربت لي % % غلبة وفاءها المستبعدا % % 47(@)(@@) % هونت عندي الصعب من صروفها % % فخلت أفعالها الوثوب مسدا % % 48(@)(@@) % أعديتها بحفظك العهد فقد % % صارت صديقا بعد أن كانت عدا % % 49(@)(@@) % و لم تضيع حرما أحكمها % % قديم حقي فيكم وأكدا % % 50(@)(@@) % أنت كما كنت أخا مخاللا % بحيث قد زدت فصرت سيدا % % PageV01P625 51(@)(@@) % فاسمع أقايضك بها قواطنا % % سوائرا معقلات شردا % % 52(@)(@@) % عوالقا بكل سمع صلف % يلفظ أن يقبل إلا الأجودا % % 53(@)(@@) % مما قهرت فجعلت وعره % % مدينا وحره مستعبدا % % 54(@)(@@) % مطاربا إذا احتبى الراوي لها % % شككت هل غنى بها أم أنشدا % % 55(@)(@@) % تخال أرجازا من استقصارها % % و قد أطال شاعر وقصدا % % 56(@)(@@) % يمضي الفتى المرسوم في فخارها % % صفحا وتبقى عرضه مخلدا % % 57(@)(@@) % تحمل أيام التهاني تحفا % منها إليك بادئات عودا % % 58(@)(@@) % ما دامت الغبراء أو ما حملت % مدحوة من الجبال وتدا % % 59(@)(@@) % سنين تطويهن حيا سالما % % منورزا في العز أو معيدا % % 60(@)(@@) % لا الشعر تبلى أبدا رسومه % فيك ولا تعدم أنت سندا % % PageV01P626 البحر : - 1(@)(@@) % رد عليها النوم بعد ما شرد % إشرافها على شراف من أحد % 2(@)(@@) % و ضمها منشورة مجرى الصبا % % و عطن الدار وطينة البلد % 3(@)(@@) % فعطفت كل صليف ناشز % على الخشاش وعلى لين المسد % 4(@)(@@) % يقودها الحادي إلى حاجته % % و همها أخرى إليها لم تقد % 5(@)(@@) % و إنما تيمها بحاجر % أيامها بحاجر لو تسترد % 6(@)(@@) % و صالحات من ليال أخلقت % عهودها وهي مع الذكرى 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms192# جدد % 7(@)(@@) % يا دين من أهل الغضا سقامها % % و وجدها بمدع ما لم يجد % 8(@)(@@) % و حفظها عهد ملول ماطل % يذكر ما استرعى وينسى ما عهد % 9(@)(@@) % و كم على وادي الغضا من كبد % يحكم فيها بسوى العدل الكمد % 10(@)(@@) % و من فؤاد بدد تلفظه % % و لائد الحي مع الحصا البدد % PageV01P627 11(@)(@@) % و صارم ما شقى القين به % % مذ سله غنج اللحاظ ما غمد % 12(@)(@@) % و من غزل لا يقل ردفه % % ضعفا وفي حباله عنق أسد % 13(@)(@@) % و قامة لو لم يكن لشكلها % % فعل القناة لم تمل ولم تمد % 14(@)(@@) % بانات واد مذ حمت شجراءه % رماح قيس ما اختلى ولا عضد % 15(@)(@@) % تلاوذ الريح بكل مرهف % غصن إذا قام وحقف إن قعد % 16(@)(@@) % حبائب بالخيف في ملاعب % هن النعيم وهي جنات الخلد % 17(@)(@@) % سقت دموعي حرها وملحها % % عيشا بها بالأمس طاب وبرد % 18(@)(@@) % لو كان لي على الزمان إمرة % بطاعة قلت أعدها لي أعد % 19(@)(@@) % يا راكبا تدوس للرزق به % % حر الثرى والليل وجناء أجد % 20(@)(@@) % ترى الطريق عرضه وطوله % لقطبها بين ذراع وعضد % PageV01P628 21(@)(@@) % تطوى السرى طي الرياح لا ترى % % سائلة أين المدى وما الأمد % 22(@)(@@) % كأنها من خفة من مسها ال % % أرض على أربعها لا تعتمد % 23(@)(@@) % تطلب نجح حاجها بجهد من % % أقسم لا يطلب إلا ما يجد % 24(@)(@@) % ارجع وراء فاسترح وأعفها % % ما كل حظ لك منه أن تكد % 25(@)(@@) % مطرح عينيك غنى مقترف % كفى بنى الحاجات شقات البعد % 26(@)(@@) % بجانب الزوراء قصر قصده % بحر إذا أعطى الغني لم يقتصد % 27(@)(@@) % أيدي بنى عبد الرحيم مده ال % % دائم والبحر يغيض ويمد % 28(@)(@@) % قد أفعموه وأباحوا ورده % % مخلدا عذبا فمن شاء ورد % 29(@)(@@) % قوم إذا لم تلق منهم واحدا % % و إن لقيت الناس لم تلق أحد % 30(@)(@@) % صانوا حمى أعراضهم ومالهم % % و ذية على الطريق تنتقد % PageV01P629 31(@)(@@) % و عقدوا لكل جار ذمة % و ذمة المال بهم لا تنعقد % 32(@)(@@) % هم دبروا الأرض فلم يعيهم % بثقلها تدبيرها ولم يؤد % 33(@)(@@) % ملوكها اليوم وآباؤهم % ملوكها وما على الأرض وتد % 34(@)(@@) % تمطقوا السؤدد في مهودهم % % من حلم ما أرضعت من لم يسد % 35(@)(@@) % و طوحوا وهم جذاع فصل % بالقارح البازل 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms193# والقرم الأشد % 36(@)(@@) % و كلما نازعهم منازع % سلم مختارا لهم أو مضطهد % 37(@)(@@) % و لا ومن قاد الصعاب لهم % و أوجدوا الفضل بهم وقد فقد % 38(@)(@@) % و أظهر الآية في اشتباههم % % بأسا وجودا وعناء وجلد % 39(@)(@@) % ما تلد الأرض ولو تحفلت % مثل كمال الملك والأرض تلد % 40(@)(@@) % رعى بني الدنيا على اختلافهم % % منفردا بما رعاه مستبد % PageV01P630 41(@)(@@) % لا مستشير يبصر الشورى له % % رأيا ولا منتصح فمرتفد % 42(@)(@@) % وحدة ذي اللبدة لا يفقره % % عناؤه بنفسه إلى العدد % 43(@)(@@) % تحرم النوم المباح عينه % % إزاء كل خلة حتى تسد % 44(@)(@@) % لا مغلق الرأي ولا مضطرب ال % % أحشاء تحت حادث من الزؤد % 45(@)(@@) % إذا أصاب فرصة لعزمه % % صمم لا يسوف اليوم بغد % 46(@)(@@) % مبارك النظرة من أبصره % % مصطحبا بوجهه فقد سعد % 47(@)(@@) % لو صيغت الأيام من أخلاقه % % لم يعترضها كدر ولا نكد % 48(@)(@@) % لم يسمه الملك الكمال أو رأى % % عن عفوه نقصان كل مجتهد % 49(@)(@@) % و لا أرادته العلا أبا لها % % إلا وقد أفلح منها ما ولد % 50(@)(@@) % أقر بالفضل له حاسده % و لو رأى وجه الجحود لجحد % PageV01P631 51(@)(@@) % أفقره الجود وإن أغناه أن % % ساد به ولم يسد من لم يجد % 52(@)(@@) % فلا يزل على الزمان منكم % مسلط يفرى الأمور ويقد % 53(@)(@@) % و لا تبدل بسواكم دولة % أنتم على أرجائها ستر يمد % 54(@)(@@) % و لا أرى سريرها وسرجها % % من غيركم من يمتطي ويقتعد % 55(@)(@@) % و كنت أنت باقيا مساوقا % % بعمره وعزه شمس الأبد % 56(@)(@@) % تسبى العطايا لك كل حرة % لولا نداك لم تكن لتعتبد % 57(@)(@@) % بنت الخدور في الصدور رضعت % ثدى النهى ونأت من الكبد % 58(@)(@@) % لم تمتهن بلفظة يلفظها % % من شرها السمع ولا معنى يرد % 59(@)(@@) % يرقى بها ود القلوب ساحر % ما شاء بالنفثة حل وعقد % 60(@)(@@) % كل لسان ثنوي مشرك % و هو لكم في شعره فرد صمد % PageV01P632 61(@)(@@) % ما دار مذ دار الكلام ناطق % بمثلها ولا جرت في الصحف يد % 62(@)(@@) % تغشاك منها كل يوم تحفة % نخبة ما قال الخبير أو نقد % 63(@)(@@) % رآك دون الناس أولى بالذي % % بالغ فيه من ثناء واجتهد % 64(@)(@@) % ما نافقتك مدحة ولم يقل % فيك غلو الشعر إلا ما اعتقد % PageV01P633 البحر : - 1(@)(@@) % قام برجل ومشى على يد 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms194# % ممتريا للرزق من سيب يد % 2(@)(@@) % أهيف وهو في السمان معرق % و واحد وهو كثير العدد % 3(@)(@@) % يمده حبل ضعيف فتله % حتى يعود محكما ذا جلد % 4(@)(@@) % يشت شملا كلما فرقه % % ألف منه بين شمل بدد % 5(@)(@@) % تبصر من عظامه وجلده % إذا اكتسى اللجين فوق العسجد % % PageV01P634 البحر : - 1(@)(@@) % ما أم أولاد كثير في العدد % تروى رضاعا وهي بكر لم تلد % 2(@)(@@) % تبسم عن عذب الرضاب بارد % لولا دم يصبغه قلت برد % 3(@)(@@) % أعجب به ماء زلالا شبما % % تجمعه في أهب نار نقد % 4(@)(@@) % يا حسنها مجموعة الشمل ويا % % أضعاف ما تحسن والشمل بدد % PageV01P635 البحر : - 1(@)(@@) % بالخيف مخطفة الحشا % % تهوى الغصون لها القدودا % % 2(@)(@@) % أخذ الغزال نفارها % % و أعارها عينا وجيدا % % 3(@)(@@) % ألفت مطال عداتها % % يا ليتها تعد الصدودا % % 4(@)(@@) % نثرت مدامعي الفري % % د لنظم مضحكها الفريدا % % 5(@)(@@) % قد كان رث هواي فاب % % تسمت فردته جديدا % % PageV01P636 البحر : - 1(@)(@@) % أعانق غصن البان منها تعلة % فأنكره مسا وأعرفه قدا % % 2(@)(@@) % و أعدل لثم الأقحوان بثغرها % % فأرزقه برقا وأحرمه بردا % % 3(@)(@@) % فلله من لم أستعض عنه غائبا % % و لم أر منه ظالما أبدا بدا % % PageV01P637 البحر : - 1(@)(@@) % بدين الهوى إن صح عقدك في الهوى % % أعن ملل في الهجر أم كاشح أغرى % % 2(@)(@@) % ألا قلما يقضي من الحب حاجة % معنى بنفس علقت حاجة أخرى % % 3(@)(@@) % حلفت لئن كان الجفاء لغدرة % لقد أبصرت عيناي من عينك الغدرا % % 4(@)(@@) % أقول لطيف منك وسدت خده % % يميني لما جل عن يدي اليسرى % % 5(@)(@@) % نحولي الذي عانيت من هجر ليلة % فما ظنها بالجسم لو هجرت عشرا % % PageV01P638 البحر : - 1(@)(@@) % ترنمت ترنم الأسير % ورقاء فوق ورق نضير % 2(@)(@@) % تنطق عن قلب لها مكسور % % كأنها تخبر عن ضميري % % 3(@)(@@) % لبيك يا حزينة الصفير % إن استجرت فبمستجير % 4(@)(@@) % مثلك في تبلد المهجور % قص جناحي زمني فطيري % % 5(@)(@@) % لك الخيار أنجدي أو غوري % % و حيثما صار هواك صيري % % 6(@)(@@) % و إن أردت الأمن تجوري % % فيممي بغداد ثم سيري % % 7(@)(@@) % أو حومي بربعها المعمور % مذ غاب فيه قمري بالنور % 8(@)(@@) % عسى تقولين لأهل الحور % و أوحشتي بعدك للسرور % PageV01P639 البحر : - 1(@)(@@) % خدع الزمان مودة من ثائر % و منى الحياة وتيرة من غادر % 2(@)(@@) % نغتر بالباقين منا والذي % % فرس المقدم 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms195# رابض للغابر % 3(@)(@@) % و إذا ذوي من دوحة غصن فيا % % سرعان ما يودى بأخر ناضر % 4(@)(@@) % يا عاشق الدنيا النجاء فإنها % % إن ساعدت وصلت بنية هاجر % 5(@)(@@) % لا تخدعنك بالسراب فلم تدع % % ظنا يرجم فيه وجه السافر % 6(@)(@@) % واردد لحاظك عن زخارفها تفز % إن البلاء موكل بالناظر % 7(@)(@@) % خذل المحدث نفسه بوفائها % % تصريحها بالغدر في ابن الناصر % % 8(@)(@@) % مشت المنون إليه غير محصن ال % % جنبات واغتالته غير محاذر % 9(@)(@@) % و لو انتحته لأنذرته وإنما % % شب الفجيعة أن أصيب بعاثر % 10(@)(@@) % صرعته مسبلة الكمام وإنما % % يقع التحفظ من ذراعي حاسر % PageV01P640 11(@)(@@) % لم ينجه البيت المطنب بالكوا % % كبو المعمد بالهلال الزاهر % 12(@)(@@) % و النسبة العلياء إن هي شجرت % زلقت معارجها بكل مفاخر % 13(@)(@@) % و عصائب مضرية قرشية % خلقوا لحفظ وشائج وأواصر % 14(@)(@@) % يتراكضون إلى تنجز ثأرهم % % و لو أنه عند الغمام السائر % 15(@)(@@) % من كل أبلج منكباه لواؤه % % بضفيرتيه السمهرية ضافر % 16(@)(@@) % برد النسيم إذا تربع عنده % % حر الهجير إذا عرافي ناجر % % 17(@)(@@) % أنس بأسباب الطلاب كأنه % % و لو امتطى النكباء غير مخاطر % 18(@)(@@) % كلا ولا أغنته عفة نفسه % % عن عاجل يرضى سواه حاضر % 19(@)(@@) % و لقاؤه شهواته ببصيرة % معصومة عنها وذيل طاهر % 20(@)(@@) % نرجو لصالحنا تطاول عمره % % تعب رجاء ولادة من عاقر % PageV01P641 21(@)(@@) % لو خلد ابن البر أو أمن الردى % % لعفافه لم يولد ابن الفاجر % 22(@)(@@) % أو كان يسلم بالشجاعة ربها % % لم تطو مقبورا حفيرة قابر % 23(@)(@@) % بالكره فارق سيف عمرو كفه % % و تقلصت عن رمحه يد عامر % 24(@)(@@) % سقت الغيوث أبا الحسين ثراك ما % % سقت الحسين أباك عين الزائر % 25(@)(@@) % و من الغرام وفيه ماء هامع % منه دعاي له بماء قاطر % 26(@)(@@) % أبكيك لا ما تستحق وجهد ما % % تسع الصبابة أن تسيل محاجري % % 27(@)(@@) % و اشارك النواح فيك بأنني % % أرثيك فالتأبين نوح الشاعر % 28(@)(@@) % و أما وبدري هاشم و لديك ما % % مبقيهما ذكرا له بالداثر % 29(@)(@@) % إن لا يكونا نسل ظهرك فالذي % % نشراه بابن الظهر ليس بناشر % 30(@)(@@) % و إذا الفتى ضعفت مؤازرة ابنه % % في الأمر فابن الأخت خير مؤازر % PageV01P642 31(@)(@@) % أبواك وابناك الفخار بأسره % و المجد يورث كابرا عن كابر % 32(@)(@@) % لا تحسبن الموت حماهما % % فالسارق المغتال غير القاهر 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms196# % 33(@)(@@) % أقسمت لو لحقاك قبل وصوله % % ما كان بينهما عليك بقادر % 34(@)(@@) % من مبلغ حيا يجمع عزه % غر بي حسام بني الحسين الباتر % 35(@)(@@) % صبرا وإن فرك العزاء فإنه % % كنز الثواب ذخيرة للصابر % 36(@)(@@) % هو حكم عدل لا يرد وكان ما % % يهن القلوب لو أنه من جائر % 37(@)(@@) % حفظ العلا لكما مشيد عرشها % % بكما فلا معمور بعد العامر % 38(@)(@@) % و إذا جرت ريح الحوادث عاصفا % % فلتنحرف عن ذا الخضم الزاخر % 39(@)(@@) % و كفى حسود كما الشقي علاجه % غيظ الهجين من العتيق الضامر % 40(@)(@@) % لا غرني منه السكوت فإنه % % خوف العقاب سكينة في نافر % PageV01P643 البحر : - 1(@)(@@) % نديمي وما الناس إلا السكارى % % أدرها ودعني غدا والخمارا % % 2(@)(@@) % من العجز ترك الفتى عاجلا % يسر لأمر يخاف انتظارا % % 3(@)(@@) % و عطل كؤوسك إلا الكبير % تجد للصغير أناسا صغارا % % 4(@)(@@) % و قرب فتى مائة أو يزي % % د قد أكمل الشيب إلا الوقارا % % 5(@)(@@) % تسر المسرة أحشاؤه % % و يبرز للعين طينا وقارا % % 6(@)(@@) % لصون سواه رأيت الغلا % % م ينفض عن كتفيه الغبارا % % 7(@)(@@) % و ذي مبزل كزناد المكب % يقدح بالبزل منه شرارا % % 8(@)(@@) % فسل من النار في وجهه % % لسانا فأمسك فاه حذارا % % 9(@)(@@) % و خادعه عن خلوقية % تذوب في كأسها الجلنارا % % 10(@)(@@) % جنت فقر شرابها المسلمين % % و أغنت بغمى اليهود التجارا % % PageV01P644 11(@)(@@) % عقرنا البدور لهم في المهو % % ر حتى جلوها علينا عقارا % % 12(@)(@@) % يطوف بها عاطل المعصمين % يلبسه الجام منها سوارا % % 13(@)(@@) % شفيق على الحب من غيره % % إذا قلت ما أحسن البدر غارا % % 14(@)(@@) % و لا مقبله ما فرقت % أريقنه الخمر أم ما أدارا % % 15(@)(@@) % هنئيا للهوى إني خلع % % ت حلمي له وتركت الوقارا % % 16(@)(@@) % و صرت فتى غبقات الملوك % عشيا أخا النشوات ابتكارا % % 17(@)(@@) % ودادي والدهر ما دام دام % و شعري والنجم ما سار سارا % % 18(@)(@@) % و فيحاء من دورهم زرتها % % و أخلق بها جنة أن تزارا % % 19(@)(@@) % تلجلج في وصفها المحدثون % % و حدث رضوان عنها فخارا % % 20(@)(@@) % تعرب قاسمها عادلا % % فخط وتحسبه العين جارا % % PageV01P645 21(@)(@@) % صحونا طوالا كما تقتضي % % شجاعتنا وحصونا قصارا % % 22(@)(@@) % و شق لبستانها عن ثرى % إذا طلع النبت فيه أنارا % % 23(@)(@@) % و قد بث في ظل شجرائه % عيون الأذى رقبة واستنارا % % 24(@)(@@) % تخفر 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms197# منها بمسلوبة % سوى ورق ألحفته إزارا % % 25(@)(@@) % من الهيف حين يجور النسيم % على غصنها لا تطيق انتصارا % % 26(@)(@@) % نحول عرضت له بالسمان % و صغرى تجنبت منها كبارا % % 27(@)(@@) % و منشورة سترت نفسها % % فخاطت قميصا ولاثت خمارا % % 28(@)(@@) % و عزت فصانت سوى ساقها % % و ما إن أباحته إلا اضطرارا % % 29(@)(@@) % نشمر عنه جلابيبها % % لعادته أن يخوض الغمارا % % 30(@)(@@) % فكادت تواريه ضنا به % % و من حسنها أنه لا يوارى % % PageV01P646 31(@)(@@) % تشككني وهي طوع الريا % % ح تتبعها يمنة أو يسارا % % 32(@)(@@) % أتدنو لتسعفني بالعنا % % ق في مثلها أم تصد ازورارا % % 33(@)(@@) % و تجلو عليك بنات الفسيل % إذا كست السعفات الثمارا % % 34(@)(@@) % غدائر غيد يضفرنها % % و تأبى عليهن إلا انتشارا % % 35(@)(@@) % جلبنا له الماء من شاهق % جزانا بحسب الصعود انحدارا % % 36(@)(@@) % و ما سال حتى أسلنا اللجين % و لا عز حتى أهنا النضارا % % 37(@)(@@) % إذا ما تحلق مستعليا % % تعلق بالطبع يبغي الفرارا % % 38(@)(@@) % فثور خمسا إذا ما نطقن % بأخباره خلت نقعا مثارا % % 39(@)(@@) % إذا جادهن ندى جدنه % و إن فر طرن إليه نفارا % % 40(@)(@@) % هوين الأمانة حتى اجتهد % % ن ليقضينه ماءه المستعارا % % PageV01P647 41(@)(@@) % تروس عليهن في وسطهن % كبرى تعول بناتا صغارا % % 42(@)(@@) % يرزن يخيلن للناظرين % % صوامع من حولها أو منارا % % 43(@)(@@) % إذا سددت لطعان قنا % حذفن إليها نصولا طرارا % % 44(@)(@@) % حوتهن معجزة الآتينين % % تجود الحيا وتمد البحارا % % 45(@)(@@) % فمن بين خركاء مضروبة % على تلعة حملتها اغترارا % % 46(@)(@@) % تولى مجاريها فوقها % % من الماء سمح كريم نجارا % % 47(@)(@@) % إذا ما ادير لها مرة % لتعجب جادت فدارت مرارا % % 48(@)(@@) % لها آية لم تكن قبلها % % و لكن ظهرنا عليها اقتدارا % % 49(@)(@@) % ترى ظلها جامدا مائعا % % و تحمل ضدين ماء ونارا % % 50(@)(@@) % و مثل العروس عروس تديم % يداها على منكبيها النثارا % % PageV01P648 51(@)(@@) % إذا ما جلوها أبت حشمة % بكرسيها أن تطيق القرارا % % 52(@)(@@) % طلبنا لها الكفء من قومها % % فعز وكان سوى الكفء عارا % % 53(@)(@@) % فعدنا نزر عليها السجوف % فترضى بها عفة واختفارا % % 54(@)(@@) % و كالظبي يظلم باسم الجمال % % فيطغى إباء ويغضى اغتفارا % % 55(@)(@@) % و يزبد فوه لغاما إذا % % تفرق عن شفتيه استطار % % 56(@)(@@) % يسير رويا إذا ما اغتدت % % كبود المطايا عطاشا حرارا % % 57(@)(@@) % و لولا الذي فعل الطنبلنب % لقد أنجد المدح فيهو غارا 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms198# % % 58(@)(@@) % و لكنه خافر للذما % % م جاورته فأساء الجوارا % % 59(@)(@@) % بغاني فلم أنج مع نهضتي % % و رحب خطائي منه فرارا % % 60(@)(@@) % رماني فأصمي بسهم له % % يدور مع المتقي كيف دارا % % PageV01P649 61(@)(@@) % إذا هو فوقه للثيا % % ب ألقى جروحا تضل السبارا % % 62(@)(@@) % فأردى ردائي وجاءت الي % % ك دراعتي تبتغي منك ثارا % % 63(@)(@@) % قتيلي لديك فلا تذهبن % عليك دماء ثيابي جبارا % % 64(@)(@@) % و بيت إذا الدهر ضام الشتاء % تعوذ منه به فاستجارا % % 65(@)(@@) % صحبت الخريف به في المصيف % و ذكرني الليل فيه النهارا % % 66(@)(@@) % و أهدى الهواء له ناشر % جناحين لو حملاه لطارا % % 67(@)(@@) % تنصت للريح مستفهما % % بأذنين لا يحملان السرارا % % 68(@)(@@) % إذا عبرت مطلقات الريا % % ح يسلكنه ظلن فيه أساري % % 69(@)(@@) % فتلفظ منها السموم الشرار % و يلقى إلينا النسيم الحبارا % % 70(@)(@@) % غرائب روضت يا ابن الكرام % % برأيك منها الشموس النوارا % % PageV01P650 71(@)(@@) % و باهلت بالأرض فيها السما % % ء فاعترفت خجلا وانحصارا % % 72(@)(@@) % و قبحت في جنب تحسينها % % بأعين أربابهن الديارا % % 73(@)(@@) % فلو صاحب السد لاحت له % % تبين فيما بناه العوارا % % 74(@)(@@) % و قيست لكسري بإيوانه % % قلاه ولم يعط عنها اصطبارا % % 75(@)(@@) % أرتك بدائعها همة % تهين عليك العظيم احتقارا % % 76(@)(@@) % و فضل يجليك يوم الرها % % ن من لا يبد ومن لا يجاري % % 77(@)(@@) % فأقسم بالله لو أنصفو % % ك قسما وردوا إلي الخيارا % % 78(@)(@@) % لما كنت أرضى لك الخافقي % % ن ملكا ولا جنة الخلد دارا % % PageV01P651 البحر : - 1(@)(@@) % بلغت صبرا فقالت ما الخبر % قلت قلب سيم ذلا فنفر % 2(@)(@@) % لا تعودي في هوى ظالمة % ربما عاذ بحلم فانتصر % 3(@)(@@) % نظرة أعرضت عنها أعقبت % غضبا آذن للقلب النظر % 4(@)(@@) % أرهفت سيفين في أجفانها % % كل من غرا يبيت على غرر % 5(@)(@@) % أقسمت من جرحاه لا برا % % يا طبيبي مت ودائي في الحور % 6(@)(@@) % أرسلت ليلة صدت طيفها % % ناظرا أين رقادي من سهر % 7(@)(@@) % قال حياني فقالت نائما % % طرفه قال نعم قالت غدر % 8(@)(@@) % يا هوى حسناء ما شئت لها % % من فؤادي غير ذل وخور % 9(@)(@@) % رب يوم باهلتني بالصبا % % و صغار عندها حظ الكبر % 10(@)(@@) % و تنكبت مدلا وفرة % نشر العنبر عنها من ضفر % PageV01P652 11(@)(@@) % فرأت شيبا فقالت غيرت % قلت ما كل شباب في الشعر % 12(@)(@@) % غيرت بيضاء في سودائها 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms199# % % قلت مهلا آية الليل القمر % 13(@)(@@) % ما لغزلان تصافيني الهوى % % ما استطاعت وأجازيها الكدر % 14(@)(@@) % أنست إذ يئست من قنصي % % فاستوى ما قر منها ونفر % 15(@)(@@) % و هل الزوراء إلا وطن % يخدع الشوق وفي أخرى الوطر % 16(@)(@@) % يا نداماي بها النسيان لي % % و لكم منى حفاظي والذكر % 17(@)(@@) % كل يوم أنا أبكي منكم % صاحبا بالأمس بقاني ومر % 18(@)(@@) % إن في الري و سعد عوضا % كلما قايست طاب وكثر % 19(@)(@@) % سوف أنجو راكبا إحسانه % كل مركوب سوى ذاك خطر % 20(@)(@@) % ساريا أجنب كبرى هممي % % أطلب المرعى لها حيث المطر % PageV01P653 21(@)(@@) % خاب من رام المعالي حاضرا % % و الأماني في كفالات السفر % 22(@)(@@) % ما الغنى والمجد إن زرت فتى % ذا تناه وهو ناء لم يزر % 23(@)(@@) % لا تباعده الليالي إنه % % أمل بين جمادى و صفر % 24(@)(@@) % بأبي الساقي وبالغيث صدى % % و الفتى الحلو الجني والشهد مر % 25(@)(@@) % علمت أعداؤه أمواله % لمما يمنعها أن تستقر % 26(@)(@@) % يافع مكتهل من حلمه % % للصبا السن وللرأي الكبر % 27(@)(@@) % يا أبا القاسم صابت نعمة % لك لم يعد بها الغيث الزهر % 28(@)(@@) % لم أزل أصبر علما أنه % % أبدا يعقب خيرا من صبر % 29(@)(@@) % ناظرا عادكم في مثلها % % جنة لي من عذاب منتظر % 30(@)(@@) % كان جرحا جائفا فاندملت % قرحة منه وكسر فجبر % PageV01P654 31(@)(@@) % يا ملوك الري هل داركم ال % % أرض طرا أم تعولون البشر % 32(@)(@@) % وسع الناس جميعا جودكم % % فاستوى من غاب عنكم وحضر % 33(@)(@@) % واصلت شاعرهم نعمى لكم % % لم تدع مفحمهم حتى شعر % 34(@)(@@) % حل يا سعد العلا بهماءها % % من قبول بحجول وغرر % 35(@)(@@) % واجل لي أخرى على الكافي متى اح % % تشمت منه حياء وخفر % 36(@)(@@) % عرفت منك فيما قبلها % % فأتت واثقة تقفو الأثر % 37(@)(@@) % حاجة تمت ووافى حظها % % حين نبهت لها منك عمر % PageV01P655 البحر : - 1(@)(@@) % فكاكك أيها القلب الأسير % غدا لو قال حادي الركب سيروا % % 2(@)(@@) % عسى الأظعان تطلع إن أثاروا % % هلالا كان تكفره الخدور % 3(@)(@@) % و إن أخذوك أنت وخلفوني % % فسر معهم فذاك لهم يسير % 4(@)(@@) % تعلقهم عساهم أن يذموا % % عليك من الصبابة أو يحيروا % % 5(@)(@@) % لمن شدنية سبقت عجالا % فما تدري أتقصد أم تجور % 6(@)(@@) % يخوض الليل سائقها أنيسا % % بآية لاخ بين يديه نور % 7(@)(@@) % و كيف يخاف 
urn:cts:arabLit:0428MihyarDaylami.Diwan.JK007630-ara1:ms200# تيه الليل ركب % تطلع من هوادجه البدور % 8(@)(@@) % يناجز في الوداع معاتبات % لهن كبودنا ولنا الزفير % 9(@)(@@) % أكنت معي بعين أم بقلب % برامة والعيون إلي صور % 10(@)(@@) % غداة أقول وابتهجت جباه % عطفن علي وابتسمت ثغور % PageV01P656 11(@)(@@) % أما من قبلة في الله قالوا % % متى حلت لشاربها الخمور % 12(@)(@@) % وقارك والتفت ترهن بيضا % كبرت فقلت مسكين الكبير % 13(@)(@@) % ألا يا صاحبي تملياني % % أطاع إباي واعتدل النفور % 14(@)(@@) % أرى كبدي وقد بردت قليلا % % أمات الهم أم عاش السرور % 15(@)(@@) % أم الأيام خافتني لأني % بفخر الملك منها أستجير % 16(@)(@@) % ذراني عاد إملاحي نميرا % و يفعم بعد ما نضب الغدير % 17(@)(@@) % طغى أملي وطال قصير باعي % % و نيمنى الشيء أوله حقير % 18(@)(@@) % و لا تتعجبا من خصب ربعي % % فربعي بعض ما جاد الوزير % 19(@)(@@) % و لكن بايعاه عن لساني % % فإني حين أعجز أستشير % 20(@)(@@) % ظهورك آية لله صحت % بها الأديان واشتفت الصدور % PageV01P657 21(@)(@@) % و زالت شبهة المرتاب في أن % % تكشف عن ضمائرها القبور % 22(@)(@@) % رآك وميت الآمال حي % بجودك والندى الأعمى بصير % 23(@)(@@) % فآمن بالمسيح وآيتيه % % و أن نشأت من الطين الطيور % 24(@)(@@) % و أيقن أن موسى شق بحرا % % بأن شقت بكفيك البحور % 25(@)(@@) % و لما أن أتيت على فتور % و باب ضلالة الأمم الفتور % 26(@)(@@) % و أبصر قبلك الماضين مروا % % و لما تنتظم بهم الأمور % 27(@)(@@) % صبا لمحمد وأطاع فيه % % و قال الرسل خيرهم الأخير % 28(@)(@@) % أقول بمعجزاتك لا غلوا % % و كاتم نعمة المعطى كفور % 29(@)(@@) % إذا الأسماء ألزمت المعاني % % فأنت الحق والوزراء زور % 30(@)(@@) % رأيناهم وكلهم شكول % مصليهم لسابقهم نظير % PageV01P658 31(@)(@@) % بك انتصر الملوك وأنت فيما % % دعوك لنصره نعم النصير % 32(@)(@@) % فأنت الليلة القمراء بانت % % على الأخوات واليوم المطير % 33(@)(@@) % حميت كبيرهم إذ حم وقت % تحوط به وقد كبر الكبير % 34(@)(@@) % و ماتت دولة فأقمت أخرى % % فلا موت عصاك ولا نشور % 35(@)(@@) % و باشرت الخلافة فاطمأنت % على أمر ومطلبه عسير % 36(@)(@@) % و يوم العهد والوافي قليل % أطاعك منبراها والسرير % 37(@)(@@) % ألين عليك معجمها المعاصي % % و خف إليك مجلسها الوقور % 38(@)(@@) % درى الفهري حين أسف قوم % و طرت بأي قادمة تطير % 39(@)(@@) % رآك بهديه فجزاك خيرا % % و قد يتفرس الرجل البصير % 40(@)(@@) % و أعطاك التي نرت قديما 