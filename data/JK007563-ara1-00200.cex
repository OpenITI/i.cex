urn:cts:arabLit:0460AbuIshaqIlbiri.Diwan.JK007563-ara1:ms1#(@)(@)(@@) البحر : - 1(@)(@@) % تفت فؤادك الأيام فتا % % وتنحت جسمك الساعات نحتا % % 2(@)(@@) % وتدعوك المنون دعاء صدق % % ألا يا صاح أنت أريد أنتا % % 3(@)(@@) % أراك تحب عرسا ذات غدر % % أبت طلاقها الأكياس بتا % % 4(@)(@@) % تنام الدهر ويحك في غطيط % % بها حتى إذا مت انتبهتا % % 5(@)(@@) % فكم ذا أنت مخدوع وحتى % % متى لا ترعوي عنها وحتى % % 6(@)(@@) % أبا بكر دعوتك لو أجبتا % % إلى ما فيه حظك إن عقلتا % % 7(@)(@@) % إلى علم تكون به إماما % % مطاعا إن نهيت وإن أمرتا % % 8(@)(@@) % وتجلو ما بعينك من عشاها % % وتهديك السبيل إذا ضللتا % % 9(@)(@@) % وتحمل منه في ناديك تاجا % % ويكسوك الجمال إذا اغتربتا % % 10(@)(@@) % ينالك نفعه ما دمت حيا % % ويبقى ذخره لك إن ذهبتا % % PageV01P001 11(@)(@@) % هو الغضب المهند ليس ينبو % % تصيب به مقاتل من ضربتا % % 12(@)(@@) % وكنز لا تخاف عليه لصا % % خفيف الحمل يوجد حيث كنتا % % 13(@)(@@) % يزيد بكثرة الإنفاق منه % % وينقص أن به كفا شددتا % % 14(@)(@@) % فلو قد ذقت من حلواه طعما % % لآثرت العلم التعلم واجتهدتا % % 15(@)(@@) % ولم يشغلك عنه هوى مطاع % % ولا دنيا بزخرفها فتنتا % % 16(@)(@@) % ولا ألهاك عنه أنيق روض % % ولا خدر بربربه كلفتا % % 17(@)(@@) % فقوت الروح أرواح المعاني % % فإن أعطاكه الله اخذتا % % 18(@)(@@) % وإن أوتيت فيه طويل باع % % وقال الناس إنك قد شبقتا % % 19(@)(@@) % فلا تأمن سؤال الله عنه % % بتوبيخ علمت فهل عملتا % % 20(@)(@@) % فرأس العلم تقوى الله حقا % % وليس بأن يقال لقد رأستا % % PageV01P002 21(@)(@@) % وضاقي ثوبك الإحسان لا أن % % ترى ثوب الإسادة قد لبستا % % 22(@)(@@) % إذا ما لم يفدك العلم خيرا % % فخير منه أن لو قد جهلتا % % 23(@)(@@) % وإن ألقاك فهمك في مهاو % % فليتك ثم ليتك ما فهمتا % % 24(@)(@@) % ستجنى من ثمار العجز جهلا % % وتصغر في العيون إذا كبرنا % % 25(@)(@@) % وتفقد إن جهلت وأنت باق % % وتواجد إن علمت وقد فقدن % % 26(@)(@@) % وتذكر قولتي لك بعد حين % % وتغبطها إذا عنها شغلتا % % 27(@)(@@) % لسوف تعض من ندم عليها % % وما تغني الندامة إن ندمتا % % 28(@)(@@) % إذا أبصرت صحبك في سماء % % قد ارتفعوا عليك وقد سفلتا % % 29(@)(@@) % فراجعها ودع عنك الهوينى % % فما بالبطء تدرك ما طلبنا % % 30(@)(@@) % ولا تحفل بمالك واله عنه % % فليس المال إلا ما علمتا % % PageV01P003 31(@)(@@) % وليس لجاهل في الناس معنى % % ولو ملك العراق له 
urn:cts:arabLit:0460AbuIshaqIlbiri.Diwan.JK007563-ara1:ms2# تأتى % % 32(@)(@@) % سينطق عنك علمك في ندي % % ويكتب عنك يوما إن كتبتا % % 33(@)(@@) % وما يغنيك تشييد المباني % % إذا بالجهل نفسك قد هدمتا % % 34(@)(@@) % جعلت فو العلم جهلا % % لعمرك في القضية ما عدلتا % % 35(@)(@@) % وبينهما بنص الوحي بون % % ستعلمه إذا طه قرأتا % % 36(@)(@@) % لئن رفع الغنى لواء مال % % لأنت لواء علمك قد رفعتا % % 37(@)(@@) % وإن جلس الغنى على الحشايا % % لأنت على الكواكب قد جلستا % % 38(@)(@@) % وإن ركب الجياد مسومات % % لأنت مناهج التقوى ركبتا % % 39(@)(@@) % ومهما افتض أبكار الغواني % % فكم بكر من الحكم افتضضتا % % 40(@)(@@) % وليس يضرك الإقتار شيئا % % إذا ما أنت ربك قد عرفتا % % PageV01P004 41(@)(@@) % فماذا عنده لك من جميل % % إذا بفناء طاعته أنختا % % 42(@)(@@) % فقابل بالقبول صحيح نصحي % % فإن أعرضت عنه فقد خسرتا % % 43(@)(@@) % وإن راعيته قولا وفعلا % % وتاجرت الإله به ربحتا % % 44(@)(@@) % فليست هذه الدنيا بشيء % % تسؤوك حقبة وتسر وقتا % % 45(@)(@@) % وغايتها إذا فكرت فيها % % كفيئك أو كحلمك إن حلمتا % % 46(@)(@@) % وتطعمك الطعام وعن قريب % % ستطعم منك ما منها طعمتا % % 47(@)(@@) % وتعرى إن لبست لها ثيابا % % وتكسى إن ملابسها خلعتا % % 48(@)(@@) % وتشهد كل يوم دفن خل % % كأنك لا تراد بما شهدتا % % 49(@)(@@) % ولم تخلق لتعمرها ولكن % % لتعبرها فجد لما خلقتا % % 50(@)(@@) % وإن هدمت فزدها أنت هدما % % وحصن أمر دينك ما استطعتا % % PageV01P005 51(@)(@@) % ولا تحزن على ما فات منها % % إذا ما أنت في أخراك فزتا % % 52(@)(@@) % فليس بنافع ما نلت فيها % % من الفاني إذا الباقي حرمتا % % 53(@)(@@) % ولا تضحك مع السفهاء لهوا % % فإنك سوف تبكي إن ضحكتا % % 54(@)(@@) % وكيف لك السرور وأنت رهن % % ولا تدري أتفدى أم غلقتا % % 55(@)(@@) % وسل من ربك التوفيق فيها % % وأخلص في السؤال إذا سألتا % % 56(@)(@@) % وناد إذا سجدت له اعترافا % % بما ناداه ذو النون بن متى % % 57(@)(@@) % ولازم بابه قرعا عساه % % سيفتح بابه لك إن قرعتا % % 58(@)(@@) % وأكثر ذكره في الأرض دأبا % % لتذكر في السماء إذا ذكرتا % % 59(@)(@@) % ولا تقل الصبا فيه مجال % % وفكر كم صغير قد دفنتا % % 60(@)(@@) % وقل لي يا نصيح لأنت أولى % % بنصحك لو بعقلك قد نظرتا % % PageV01P006 61(@)(@@) % تقطعني على التفريط لوما % % وبالتفريط دهرك قد قطعتا % % 62(@)(@@) % وفي صغري تخوفني المنايا % % وما تجري ببالك حين شختا % % 63(@)(@@) % وكنت مع الصبا أهدى سبيلا % % فما لك 
urn:cts:arabLit:0460AbuIshaqIlbiri.Diwan.JK007563-ara1:ms3# بعد شيبك قد نكستا % % 64(@)(@@) % وها أنا لم أخض بحر الخطايا % % كما قد خضته حتى غرقتا % % 65(@)(@@) % ولم أشرب حميا أم دفر % % وأنت شربتها حتى سكرتا % % 66(@)(@@) % ولم أحلل بواد فيه ظلم % % وأنت حللت فيه وانهملتا % % 67(@)(@@) % ولم أنشأبعصر فيه نفع % % وأنت نشأت فيه وما انتفعتا % % 68(@)(@@) % وقد صاحبت أعلاما كبارا % % ولم أرك اقتديت بمن صحبتا % % 69(@)(@@) % وناداك الكتاب فلم تجبه % % ونهنهك المشيب فما انتبهتا % % 70(@)(@@) % ليقبح بالفتى فعل التصابي % % وأقبح منه شيخ قد تفتى % % PageV01P007 71(@)(@@) % فأنت أحق بالتفنيد مني % % ولو سكت المسيء لما نطقتا % % 72(@)(@@) % ونفسك ذم لا تذمم سواها % % بعيب فهي أجدر من ذممتا % % 73(@)(@@) % فلو بكت الدما عيناك خوفا % % لذنبك لم أقل لك قد أمنتا % % 74(@)(@@) % ومن لك بالامان وأنت عبد % % أمرت فما أئتمرت ولا أطعتا % % 75(@)(@@) % ثقلت من الذنوب ولست تخشى % % لجهلك أن تخف إذا وزنتا % % 76(@)(@@) % وتشفق للمصر على المعاصي % % وترحمه ونفسك ما رحمتا % % 77(@)(@@) % رجعت القهقرى وخطبت عشوا % % لعمرك لو وصلت لما رجعتا % % 78(@)(@@) % ولو وافيت ربك دون ذنب % % وناقشك الحساب إذا هلكتا % % 79(@)(@@) % ولم يظلمك في عمل ولكن % % عسير أن المنازل فيه شتى % % 80(@)(@@) % لأعظمت الندامة فيه لهفا % % على ما في حياتك قد اضعتا % % PageV01P008 81(@)(@@) % تفر من الهجير وتنقيه % % فهلا عن جهنم قد فررتا % % 82(@)(@@) % ولست تطيق أهونها عذابا % % ولو كنت الحديد بها لذبتا % % 83(@)(@@) % فلا تكذب فإن الأمر جد % % وليس كما احتسبت ولا ظننتا % % 84(@)(@@) % أبا بكر كشف أقل عيبي % % وأكثره ومعظمه سترتا % % 85(@)(@@) % فقل ما شئت في من المخازي % % وضاعفها فأنك قد صدقتا % % 86(@)(@@) % ومهما عبتني فلفرط علمي % % بباطنتي كأنك قد مدحتا % % 87(@)(@@) % فلا ترض المعايب فهي عار % % عظيم يورث الانسان مقتا % % 88(@)(@@) % وتهوي بالوجيه من الثريا % % وتبدله مكان الفوق تحتا % % 89(@)(@@) % كما الطاعات تنعلك الدراري % % وتجعلك القريب وإن بعدتا % % 90(@)(@@) % وتنشر عنك في الدنيا جميلا % % فتلفى البر فيها حيث كنتا % % PageV01P009 91(@)(@@) % وتمشي مناكبها كريما % % وتجني الحمد مما قد غرستا % % 92(@)(@@) % وأنت الآن لم تعرف بعاب % % ولا دنست ثوبك مذ نشأتا % % 93(@)(@@) % ولا سابقت في ميدان زور % % ولا أوضعت فيه ولا خببتا % % 94(@)(@@) % فإن لم تنأ عنه نشبت فيه % % ومن لك بالخلاص إذا نشبتا % % 95(@)(@@) % ودنس ما تطهر منك حتى % % كأنك قبل ذلك 
urn:cts:arabLit:0460AbuIshaqIlbiri.Diwan.JK007563-ara1:ms4# ما طهرتا % % 96(@)(@@) % وصرت أسير ذنبك في وثاق % % وكيف لك الفكاك وقد اسرتا % % 97(@)(@@) % وخف أبناء جنسك واخش منهم % % كما تخشى الضراغم والسبنتى % % 98(@)(@@) % وخالطهم وزايلهم حذارا % % وكن كالسامري إذا لمستا % % 99(@)(@@) % وإن جهلوا فقل سلاما % % لعلك سوف تسلم إن فعلتا % % 100(@)(@@) % ومن لك بالسلامة في زمان % % ينال العصم إلا إن عصمتا % % PageV01P010 101(@)(@@) % ولا تلبث بحي فيه ضيم % % يميت القلب إلا إن كبلتا % % 102(@)(@@) % وغرب فالغريب له نفاق % % وشرق إن بريقك قد شرقتا % % 103(@)(@@) % ولو فوق الأمير تكون فيها % % سموا وأفتخارا كنت أنتا % % 104(@)(@@) % وإن فرقتها وخرجت منها % % إلى دار السلام فقد سلمتا % % 105(@)(@@) % وإن كرمتها ونظرت منها % % بإجلال فنفسك قد أهنتا % % 106(@)(@@) % جمعت لك النصائح فامتثلها % % حياتك فهي أفضل ما امتثلتا % % 107(@)(@@) % وطولت العتاب وزدت فيه % % لأنك في البطالة قد أطلتا % % 108(@)(@@) % فلا تأخذ بتقصيري وسهوي % % وخذ بوصيتي لك إن رشدتا % % 109(@)(@@) % وقد اردفتها ستا % % وكانت قبل ذا مئة وستا % % PageV01P011 البحر : - 1(@)(@@) % تغازلني المنية من قريب % % وتلحظني ملاحظة الرقيب % % 2(@)(@@) % وتنشر لي كتابا فيه طيي % % بخط الدهر أسطره مشيبي % % 3(@)(@@) % كتاب في معانيه غموض % % يلوح لكل أواب منيب % % 4(@)(@@) % أرى الأعصار تعصر ماء عودي % % وقدما كنت ريان القضيب % % 5(@)(@@) % أدال الشيب يا صاح شبابي % % فعوضت البغيض من الحبيب % % 6(@)(@@) % وبدلت التثاقل من نشاطي % % ومن حسن النضارة بالشحوب % % 7(@)(@@) % كذاك الشمس يعلوها اصفرار % % إذا جنحت ومالت للغروب % % 8(@)(@@) % تحاربنا جنود لا تجارى % % ولا تلقى بآساد الحروب % % 9(@)(@@) % هي الأقدار والآجال تأتي % % فتنزل بالمطبب والطبيب % % 10(@)(@@) % تفوق أسهما عن قوس غيب % % وما أغراضها غير القلوب % % PageV01P012 11(@)(@@) % فأنى باحتراس من جنود % % مؤيدة تمد من الغيوب % % 12(@)(@@) % وما آسى على الدنيا ولكن % % على ما قد ركبت من الذنوب % % 13(@)(@@) % فيا لهفي على طول اغتراري % % ويا ويحي من اليوم العصيب % % 14(@)(@@) % إذا أنا لم أنح نفسي وأبكي % % على حوبي بتهتان سكوب % % 15(@)(@@) % فمن هذا الذي بعدي سيبكي % % عليها من بعيد أو قريب % % PageV01P013 البحر : - 1(@)(@@) % احمامة البيدا اطلت بكاك % % فبحسن صوتك ما الذي ابكاك % % 2(@)(@@) % إن كان حقا ما ظننت فإن بي % % فوق الذي بك من شديد جواك % % 3(@)(@@) % إني أظنك قد دهيت بفرقة % % من مؤنس لك فارتمضت لذاك % % 4(@)(@@) % لكن ما أشكوه من فرط الجوى % % بخلاف ما 
urn:cts:arabLit:0460AbuIshaqIlbiri.Diwan.JK007563-ara1:ms5# تجدين من شكواك % % 5(@)(@@) % أنا إنما ابكي الذنوب وأسرها % % ومناي في الشكوى منال فكاكي % % 6(@)(@@) % وإذا بكيت سألت ربي رحمة % % وتجاوزا فبكاي غير بكاك % % PageV01P014 البحر : - 1(@)(@@) % من ليس بالباكي ولا المتباكي % % لقبيح ما يأتي فليس بزاك % % 2(@)(@@) % نادت بي الدنيا فقلت لها اقصري % % ما عد في الأكياس من لباك % % 3(@)(@@) % ولما صفا عند الإله ولا دنا % % منه امرؤ صافاك أو داناك % % 4(@)(@@) % ما زلت خادعتى ببرق خلب % % ولو اهتديت لما انخدعت لذاك % % 5(@)(@@) % قالت أغرك من جناحك طوله % % وكأن به قد قص في أشراكي % % 6(@)(@@) % تالله ما في الأرض موضع راحة % % إلا وقد نصبت عليه شباكي % % 7(@)(@@) % طر كيف شئت فأنت فيها واقع % % عان بها لا يرتجى لفكاك % % 8(@)(@@) % من كان يصرع قرنه في معرك % % فعلي صرعته بغير عراك % % 9(@)(@@) % ما أعرف العضب الصقيل ولا القنا % % ولقد بطشت بذي السلاح الشاكي % % 10(@)(@@) % فأجبتها متعجبا من غدرها % % أجزيت بالبغضاء من يهواك % % PageV01P015 11(@)(@@) % لأجلت عيني في نبيك فكلهم % % أسراك أو جرحاك أو صرعاك % % 12(@)(@@) % لو قارضوك على صنيعك فيهم % % قطعوا مدى أعمارهم بقلاك % % 13(@)(@@) % طمست عقولهم ونور قلوبهم % % فتها فتوا حرصا على حلواك % % 14(@)(@@) % فكأنهم مثل الذباب تساقطت % % في الأري حتى استؤ صلوا بهلاك % % 15(@)(@@) % لا كنت من أم لنا أكالة % % بعد الولادة ماأقل حياك % % 16(@)(@@) % ولقد عهدنا الأم تلطف بابنها % % عطفا عليه وأنت ما أقساك % % 17(@)(@@) % ما فوق ظهرك قاطن أو ظاعن % % إلا سيهشم في ثفال رحاك % % 18(@)(@@) % أنت السراب وأنت داء كامن % % بين الضلوع فما أعز دواك % % 19(@)(@@) % يعصى الأله إذا أطعت وطاعتي % % لله ربي أن أشق عصاك % % 20(@)(@@) % فرض علينا برنا أماتنا % % وعقوقهن محرم إلاك % % PageV01P016 21(@)(@@) % ما إن يدوم الفقر فيك ولا الغنى % % سيان فقرك عندنا وغناك % % 22(@)(@@) % أين الجبابرة الألى ورياشهم % % قد باشروا بعد الحرير ثراك % % 23(@)(@@) % ولطالما ردوا بأردية البها % % فتعوضوا منها رداء رداك % % 24(@)(@@) % كانت وجوههم كأقمار الدجا % % فغدت مسجاة بثوب دجاك % % 25(@)(@@) % وعنت لقيوم السماوات العلا % % رب الجميع وقاهر الأملاك % % 26(@)(@@) % وجلال ربي لو تصح عزائمي % % لزهدت فيك ولا بتغيب سواك % % 27(@)(@@) % وأخذت زادي منك من عمل التقى % % وشددت غيماني بنقض عراك % % 28(@)(@@) % وحططت رحلي تحت ألوية الهدى % % ولما رآني الله تحت لواك % % 29(@)(@@) % مهلا عليك 
urn:cts:arabLit:0460AbuIshaqIlbiri.Diwan.JK007563-ara1:ms6# فسوف يلحقك الفنا % % فترى بلا أرض ولا أفلاك % % 30(@)(@@) % ويعيدنا رب أمات جميعنا % % ليكون يرضي غير من أرضاك % % PageV01P017 31(@)(@@) % والله ماالمحبوب عند مليكه % % إلا لبيب لم يزل يشناك % % 32(@)(@@) % هجر الغواني واصلا لعقائل % % يضحكن حبا للولي الباكي % % 33(@)(@@) % إني أرقت لهن لا لحمائم % % تبكى الهديل على غصون أراك % % 34(@)(@@) % لا عيش يصفو للملوك وإنما % % تصفو وتحمد عيشة النساك % % 35(@)(@@) % ومن الإله على النبي صلاته % % عدد النجوم وعدة الأملاك % % PageV01P018 البحر : - 1(@)(@@) % لو كنت في ديني من الابطال % % ما كنت بالواني ولا البطال % % 2(@)(@@) % ولبست منه لأمة فضاضة % % مسرودة من صالح العمال % % 3(@)(@@) % لكنني عطلتأقواس التقى % % من نبلها فرمت بغير نبال % % 4(@)(@@) % ورمى العدو بسهمه فأصابني % % إذا لم احصن جنة لنضال % % 5(@)(@@) % فأنا كمن يلقى الكتبية اعزلا % % في مأزق متعرضا لنزال % % 6(@)(@@) % لولا رجاء العفو كنت كناقع % % برح الغليل برشف لمع الآل % % 7(@)(@@) % شاب القذال فآن لي أن أرعوي % % لو كنت متعظا بشيب قذال % % 8(@)(@@) % ولو انني مستبصرا إذ حل بي % % لعلمت أنم حلولة ترحالي % % 9(@)(@@) % فنظرت في زاد لدار إقامتي % % وسألت ربي أن يحل عقالي % % 10(@)(@@) % فلكم هممت بتوبة فمنعتها % % إذ لم أكن أهلا لها وبدالي % % PageV01P019 11(@)(@@) % ويعز ذاك علي إلا أنني % % متقلب في قبضة المتعالي % % 12(@)(@@) % ووصلت دنيا سوف تقطع شأفتي % % بأفول انجمها وخسف هلالي % % 13(@)(@@) % شغلت مفتن أهلها بفتونها % % ومن المحال تشاغل بمحال % % 14(@)(@@) % لا شيء أخسر صفقة من عالم % % لعبت به الدنيا مع الجهال % % 15(@)(@@) % فغدا يفرق دينه أيدي سبا % % ويزيله حرصا لجمع المال % % 16(@)(@@) % لا خير في كسب الحرام وقلما % % يرجى الخلاص لكاسب لحلال % % 17(@)(@@) % ما إن سمعت بعائل تكوى غدا % % بالنار جبهته على الإقلال % % 18(@)(@@) % وإذا اردت صحيح من يكوى بها % % فاقرأعقيبة سورة الأنفال % % 19(@)(@@) % ما يثقل الميزان إلا بامرىء % % قد خف كاهله من الأثقال % % 20(@)(@@) % فخد الكفاف ولا تكن ذا فضلة % % فالفضل تسأل عنه أي سؤال % % PageV01P020 21(@)(@@) % فهم وأنت وفقرنا وغناهم % % لا يستقر ولا يدوم بحال % % 22(@)(@@) % وطف البلاد لكي ترى آثار من % % قد كان يملكها من الأقيال % % 23(@)(@@) % عصفت بهم ريح الردى فذرتهم % % ذرو الرياح الهوج حقف رمال % % 24(@)(@@) % وتزلزلت بهم المنابر بعد ما % % ثبتت وكانوا فوقها كجبال % % 25(@)(@@) % واحبس قلوصك ساعة بطلولهم % % واحذر عليك 
urn:cts:arabLit:0460AbuIshaqIlbiri.Diwan.JK007563-ara1:ms7# بها من الأغوال % % 26(@)(@@) % فلكم بها من أرقم صل وكم % % قد كان فيها من مها وغزال % % 27(@)(@@) % ولكم غدت منها وراحت حلبة % % للحرب يقدمها أبو الأشبال % % 28(@)(@@) % فتقطعت أسبابهم وتمزقت % % ولقبل ما كانوا كنظم لآل % % 29(@)(@@) % وإذا أتيت قبورهم فاسألهم % % عما لقوا فيها من الأهوال % % 30(@)(@@) % فسيخبرونك إن فهمت بحالهم % % بعبارة كالوحي لا بمقال % % PageV01P021 31(@)(@@) % من لا يراقب ربه ويخافه % % تبت يداه وما له من وال % % PageV01P022 البحر : - 1(@)(@@) % ألا خبر بمنتزح النواحي % % أطير إليه منشور الجناح % % 2(@)(@@) % فأسأله وألطفه عساه % % سيأسو ما بديني من جراح % % 3(@)(@@) % ويجلو ما دجا من ليل جهلي % % بنور هدى كمنبلج الصباح % % 4(@)(@@) % فأبصق في محيا أم دفر % % واهجرها وأدفعها براحي % % 5(@)(@@) % وأصحو من حمياها وأسلوا % % عفافا عن جآذرها الملاح % % 6(@)(@@) % وأصرف همتي بالكل عنها % % إلى دار السعادة والنجاح % % 7(@)(@@) % أفي الستين أهجع في مقيلي % % وحادي الموت يوقظ للروح % % 8(@)(@@) % وقد نشر الزمان لواء شيبي % % ليطويني ويسلبني وشاحي % % 9(@)(@@) % وقد سل الحمام علي نصلا % % سيقتلني وإن شاكت سلاحي % % 10(@)(@@) % ويحملني إلى الأجداث صحبي % % إلى ضيق هناك أو انفساح % % PageV01P023 11(@)(@@) % فأجزى الخير إن قدمت خيرا % % وشرا إن جزيت على اجتراحي % % 12(@)(@@) % وها أناذا على علمي بهذا % % بطيء الشأو في سنن الصلاح % % 13(@)(@@) % ولي شأو بميدان الخطايا % % بعيد لا يبارى بالرياح % % 14(@)(@@) % فلو أني نظرت بعين عقلي % % إذن لقطعت دهري بالنياح % % 15(@)(@@) % ولم أسحب ذيولي في التصابي % % ولم أطرب بغانية رداح % % 16(@)(@@) % وكنت اليوم أوابا منيبا % % لعلي أن تفوز غدا قداحي % % 17(@)(@@) % إذا ما كنت مكبول الخطايا % % وعانيها فمن لي بالبراح % % 18(@)(@@) % فهل من توبة منها نصوح % % تطيرني وتأخذ لي سراحي % % 19(@)(@@) % فيا لهفي إذا جمع البرايا % % على حربي لديهم وافتضاحي % % 20(@)(@@) % ولولا أنني أرجو إلهي % % ورحمته يئست من الفلاح % % PageV01P024 البحر : - 1(@)(@@) % أأحور عن قصدي وقد برح الخفا % % ووقفت من عمري القصير على شفا % % 2(@)(@@) % وأرى شؤون العين تمسك ماءها % % ولقبل ما حكت السحاب الوكفا % % 3(@)(@@) % وأخال ذاك لعبرة عرضت لها % % من قسوة في القلب اشبهت الصفا % % 4(@)(@@) % ولقل لي طول البكاء لهفوتي % % فلربما شفع البكاء لمن هفا % % 5(@)(@@) % إن المعاصي لا تقيم بمنزل % % إلا لتجعل منه قاعا صفصفا % % 6(@)(@@) % ولو أنني داويت معطب دائها % % بمراهم التقوى لوافقت الشفا % % 7(@)(@@) % ولعفت 
urn:cts:arabLit:0460AbuIshaqIlbiri.Diwan.JK007563-ara1:ms8# موردها المشوب برنقها % % وغسلت رين القلب في عين الصفا % % 8(@)(@@) % وهزمت جحفل غيها بإنابة % % وسللت من ندم عليها مرهفا % % 9(@)(@@) % وهجرت دنيا لم تزل غرارة % % بمؤمليها الممحضين لها الوفا % % 10(@)(@@) % سحقتهم وديارهم سحق الرحا % % فعليهم وعلى ديارهم العفا % % PageV01P025 11(@)(@@) % ولقد يخاف عليهم من ربهم % % يوم الجزاء النار إلا إن عفا % % 12(@)(@@) % إن الجواد إذا تطلب غاية % % بلغ المدى منها وبذ المقرفا % % 13(@)(@@) % شتان بين مشمر لمعادة % % أبدا وآخر لا يزال مسوفا % % 14(@)(@@) % إني دعوتك ملحفا لتجيرني % % مما أخاف فلا ترد الملحفا % % PageV01P026 البحر : - 1(@)(@@) % الشيب نبه ذا النهى فتنبها % % ونهى الجهول فما استفاق ولا انتهى % % 2(@)(@@) % بل زاد رغبة فتهافتت % % تبغي اللهى وكأن بها بين اللها % % 3(@)(@@) % فإلى متى ألهو وأفرح بالمنى % % والشيخ أقبح ما يكون إذا لها % % 4(@)(@@) % ما حسنه إلا التقى لا أن يرى % % صبا بألحاظ الجآذر والمها % % 5(@)(@@) % أنى يقاتل وهو مفلول الظبا % % كابي الجواد إذا استقل تأوها % % 6(@)(@@) % محق الزمان هلاله فكأنما % % أبقى له منه على قدر السها % % 7(@)(@@) % فغدا حسيرا يشتهي أن يشتهي % % ولكم جرى طلق الجموح كما اشتهى % % 8(@)(@@) % إن أن أواه وأجهش في البكا % % لذنوبه ضحك الظلوم وقهقها % % 9(@)(@@) % ليست تنهنهه العظات ومثله % % في سنه قد آن أن يتنهنها % % 10(@)(@@) % فقد اللدات وزاد غيا بعدهم % % هلا تيقظ بعدهم وتنبها % % PageV01P027 11(@)(@@) % يا ويحه ما با له لا ينتهي % % عن غيه والعمر منه قد انتهى % % 12(@)(@@) % قد كان من شيمتي الدها فتركته % % علما بأن من الدها ترك الدها % % 13(@)(@@) % ولو انني أرضى الدناءة خطة % % لوددت أني كنت أحمق أبلها % % 14(@)(@@) % فلقد رأيت البله قد بلغوا المدى % % وتجاوزوه وازدروا بأولي النهى % % 15(@)(@@) % من ليس يسعى في الخلاص لنفسه % % كانت سعايته عليها لا لها % % 16(@)(@@) % إن الذنوب بتوبة تمحى كما % % يمحو سجود السهو غفلة من سها % % PageV01P028 البحر : - 1(@)(@@) % قد بلغت الستين ويحك فاعلم % % أن ما بعدها عليك تلوم % % 2(@)(@@) % فإذا ما انقضت سنوك وولت % % فصل الحاكم القضاء فأبرم % % 3(@)(@@) % أنت مثل السجل ينشر حينا % % ثم يطوى من بعد ذاك ويختم % % 4(@)(@@) % كيف يلتذ بالحياة لبيب % % فوقت نحوه المنية أسهم % % 5(@)(@@) % ليس يدري متى يفاجيه منها % % صائب يقصف الظهور ويقصم % % 6(@)(@@) % ما لغصني ذوى وكان نظيرا % % ولظهري انحنى 
urn:cts:arabLit:0460AbuIshaqIlbiri.Diwan.JK007563-ara1:ms9# وكان مقوم % % 7(@)(@@) % ولحدي نبا وكان مبيرا % % ولجيشي انثنى وكان عرمرم % % 8(@)(@@) % ولدهري أدال شرخ شبابي % % بمشيب عند الحسان مذمم % % 9(@)(@@) % فأنا اليوم عن هواهن سال % % وقديما بهن كنت متيم % % 10(@)(@@) % لو بروق الزمان ينطح يوما % % ركن ثهلان هده فتهدم % % PageV01P029 11(@)(@@) % نحن في منزل الفناء ولكن % % هو باب إلى البقاء وسلم % % 12(@)(@@) % ورحى الموت تستدير علينا % % أبدا تطحن الجميع وتهشم % % 13(@)(@@) % وأنا موقن بذاك عليم % % وفعالي فعال من ليس يعلم % % 14(@)(@@) % وكذا امتطي الهوينا إلى أن % % أتوفى فعند ذلك أندم % % 15(@)(@@) % فعسى من له أعفر وجهي % % سيرى فاقتي إليه فيرحم % % 16(@)(@@) % فشفيعي إليه حسن ظنوني % % ورجائي له وأني مسلم % % 17(@)(@@) % وله الحمد أن هداني لهذا % % عدد القطر ما الحمام ترنم % % 18(@)(@@) % وإليه ضراعتي وابتهالي % % في معافاة شيبتي من جهنم % % PageV01P030 البحر : - 1(@)(@@) % كأني بنفسي وهي في السكرات % % تعالج أن ترقى إلى اللهوات % % 2(@)(@@) % وقد زم رحلي واستقلت ركائبي % % وقد آذنتني بالرحيل حداتي % % 3(@)(@@) % إلى منزل فيه عذاب ورحمة % % وكم فيه من زجر لنا وعظات % % 4(@)(@@) % ومن أعين سالت على وجناتها % % ومن أوجه في التراب منعفرات % % 5(@)(@@) % ومن وارد فيه على ما يسره % % ومن وارد فيه على الحسرات % % 6(@)(@@) % ومن عاثر ما إن يقال له لعا % % على ما عهدنا قبل في العثرات % % 7(@)(@@) % ومن ملك كان السرور مهاده % % مع الآنسات الخرد الخفرات % % 8(@)(@@) % غدا لا يذود الدود عن حر وجهه % % وكان يذود الأسد في الأجمات % % 9(@)(@@) % وعوض أنسا من ظباء كناسه % % وأرامه بالرقش والحشرات % % 10(@)(@@) % وصار ببطن الأرض يلتحف الثرى % % وكان يجر الوشي والحبرات % % PageV01P031 11(@)(@@) % ولم تغنه أنصاره وجنوده % % ولم تحمه بالبيض والأسلات % % 12(@)(@@) % ومما شجاني والشجون كثيرة % % ذنوب عظام أسبلت عبراتي % % 13(@)(@@) % وأقلقني أني أموت مفرطا % % على أنني خلفت بعد لداتي % % 14(@)(@@) % وأغفلت أمري بعدهم متثبطا % % فيا عجبا مني ومن غفلاتي % % 15(@)(@@) % إلى الله أشكو جهل نفسي فإنها % % تميل إلى الراحات والشهوات % % 16(@)(@@) % ويا رب خل كنت ذا صلة له % % يرى أن دفني من أجل صلاتي % % 17(@)(@@) % وكنت له أنسا وشمسا منيرة % % فأفردني في وحشة الظلمات % % 18(@)(@@) % سأضرب فسطاطي على عسكر البلى % % وأركز فيه للنزول قناتي % % 19(@)(@@) % وأركب ظهرا لا يؤوب براكب % % ولا يمتطى إلا إلى الهلكات % % 20(@)(@@) % وليس يرى إلا بساحة ظاعن 
urn:cts:arabLit:0460AbuIshaqIlbiri.Diwan.JK007563-ara1:ms10# % % إلى مصرع الفرحات والترحات % % PageV01P032 21(@)(@@) % يسير أدنى الناس سيرا كسيره % % بأرفع منعي من السروات % % 22(@)(@@) % فطورا تراه يحمل الشم والربا % % وطورا تراه يحمل الحصيات % % 23(@)(@@) % ورب حصاة قدرها فوق يذبل % % كمقبول ما يرمى من الجمرات % % 24(@)(@@) % وكل صغير كان لله خالصا % % يربي على ما جاء في الصدقات % % 25(@)(@@) % ولكنه يرجى لمن مات محسنا % % ويخشى على من مات في غمرات % % 26(@)(@@) % وما اليوم يمتاز التفاضل بينهم % % ولكن غدا يمتاز في الدرجات % % 27(@)(@@) % إذا روع الخاطي وطار فؤاده % % وأفرخ روع البر في الغرفات % % 28(@)(@@) % وما يعرف الإنسان أين وفاته % % أفي البر أم في البحر أم بفلاة % % 29(@)(@@) % فيا إخواتي مهما شهدتم جنازتي % % فقوموا لربي واسألوه نجاتي % % 30(@)(@@) % وجدوا ابتهالا في الدعاء وأخلصوا % % لعل إلهي يقبل الدعوات % % PageV01P033 31(@)(@@) % وقولوا جميلا إن علمتم خلافه % % وأغضوا على ما كان من هفواتي % % 32(@)(@@) % ولا تصفوني بالذي أنا أهله % % فأشقى وحلوني بخير صفات % % 33(@)(@@) % ولا تتناسوني فقدما ذكرتكم % % وواصلتكم بالبر طول حياتي % % 34(@)(@@) % وبالرغم فارقت الأحبة منكم % % ولما تفارقني بكم زفراتي % % 35(@)(@@) % وإن كنت ميتا بين أيديكم لقى % % فروحي حي سامع لنعاتي % % 36(@)(@@) % أناجيكم وحيا وإن كنت صامتا % % ألا كلكم يوما إلي سياتي % % 37(@)(@@) % وليس يقوم الجسم إلا بروحه % % هو القطب والأعضاء كالأدوات % % 38(@)(@@) % ولابد يوما أن يحور بعينه % % ليجزى على الطاعات والتبعات % % 39(@)(@@) % وإلا أكن أهلا لفضل ورحمة % % فربي أهل الفضل والرحمات % % 40(@)(@@) % فما زلت ارجو عفوه وجنانه % % وأحمده في اليسر والأزمات % % PageV01P034 41(@)(@@) % وأسجد تعظيما له وتذللا % % وأعبده في الجهر والخلوات % % 42(@)(@@) % ولست بممتن عليه بطاعتي % % له المن في التيسير للحسنات % % PageV01P035 البحر : - 1(@)(@@) % ما أميل النفس إلى الباطل % % وأهون الدنيا على العاقل % % 2(@)(@@) % ترضي الفتى في عاجل شهوة % % لو خسر الجنة في الآجل % % 3(@)(@@) % يبيع ما يبقى بما ينفضي % % فعل السفينة الأحمق الجاهل % % 4(@)(@@) % يا من رأى لي واصلا مرشدا % % وانني أكلف بالواصل % % 5(@)(@@) % يا من رأى لي عالما عاملا % % فألزم الخدمة للعامل % % 6(@)(@@) % أم من رأى عالما ساكتا % % وعقله في عالم جائل % % 7(@)(@@) % يسرح في زهر رياض النهى % % ليست كروض ماحل ذابل % % 8(@)(@@) % يا رب قلب كجناح هفت % % قد غاب في بحر بلا ساحل % % 9(@)(@@) % يصرف الخطرة مذعورة % % مما يرى من منظر هائل % % 10(@)(@@) % آه لسر صنته 
urn:cts:arabLit:0460AbuIshaqIlbiri.Diwan.JK007563-ara1:ms11# لم أجد % % خلفا له قط بمستاهل % % PageV01P036 11(@)(@@) % هل يقظ يسألني علني % % أكشفه لليقظ السائل % % 12(@)(@@) % قد يرحل المرء لمطلوبه % % والسبب الكطلوب في الراحل % % 13(@)(@@) % لو شغل المرء بتركيبه % % كان به في شغل شاغل % % 14(@)(@@) % وعاين الحكمة مجموعة % % ماثلة في هيكل ماثل % % 15(@)(@@) % يا أيها الغافل عن نفسه % % ويك أفق من سنة الغافل % % 16(@)(@@) % وانظر إلى الطاعة مشهورة % % في الفلك الصاعد والنازل % % 17(@)(@@) % والحظ بعينيك أديم السما % % من طالع فيها ومن آفل % % 18(@)(@@) % كل على مسلكه لا يرى % % عن ذلك المسلك بالمائل % % 19(@)(@@) % لو دبرت أنفسها لم تغب % % واطلع الناقص كالكامل % % 20(@)(@@) % وانظر إلى المزنة مشحونة % % مثقلة الكاهل كالبازل % % PageV01P037 21(@)(@@) % تحن من شوق إلى وقفة % % أو خطرة بالبلد الماحل % % 22(@)(@@) % فسر هذا الشأن لا ينجلي % % إلا لعبد مخلص فاضل % % PageV01P038 البحر : - 1(@)(@@) % أنت المخاطب أيها الإنسان % % فأصخ إلي يلح لك البرهان % % 2(@)(@@) % أودعت ما لو قلته لك قلت لي % % هذا لعمرك كله هذيان % % 3(@)(@@) % فانظر بعقلك من بنانك واعتبر % % إتقان صنعته فثم الشان % % 4(@)(@@) % لله أكياس جفوا أوطانهم % % فالأرض أجمعها لهم أوطان % % 5(@)(@@) % جالت عقولهم مجال تفكر % % وتدبر فبدا لها الكتمان % % 6(@)(@@) % ركبت بحار الفهم في فلك النهى % % وجرى بها الإخلاص والإيمان % % 7(@)(@@) % فرست بهم لما أتوا محبوبهم % % مرسى لهم فيه غنى وأمان % % PageV01P039 البحر : - 1(@)(@@) % قالوا ألا تستجد بيتا % % تعجب من حسنه البيوت % % 2(@)(@@) % فقلت ما ذلكم صواب % % حفش كثير لمن يموت % % 3(@)(@@) % لولا شتاء ولفح قيظ % % وخوف لص وحفظ قوت % % 4(@)(@@) % ونسوة يبتغين سترا % % بنيت بنيان عنكبوت % % 5(@)(@@) % وأي معنى لحسن مغنى % % ليس لأربابه ثبوت % % 6(@)(@@) % ما أوعظ القبر لو قبلنا % % موعظة الناطق الصموت % % 7(@)(@@) % يوحي إلى ممتطي الحشايا % % مالك من مضجعي عميت % % 8(@)(@@) % نسيت يومي وطول نومي % % وسوف تنسى كما نسيت % % 9(@)(@@) % وشدت يا هادمي قصورا % % نعمت فيهن كيف شيت % % 10(@)(@@) % معتنقا للحسان فيها % % مستنشقا مسكها الفتيت % % PageV01P040 11(@)(@@) % تسحب ذيل الصبا وتلهو % % بآنسات يقلن هيت % % 12(@)(@@) % فاذكر مهادي إلى التنادي % % وامهد له قبل أن يفوت % % 13(@)(@@) % فعن قريب تكون طعمي % % سخطت يا صاح أم رضيت % % PageV01P041 البحر : - 1(@)(@@) % ألفت العقاب حذار العقاب % % وعفت الموارد خوف الذئاب % % 2(@)(@@) % وأبغضت نفسي لعصيانها % % وعاتبتها بأشد العتاب % % 3(@)(@@) % وقلت لها بان عنك الصبا % % وجردك الشيب ثوب الشباب % % 4(@)(@@) % وما بعد ذلك 
urn:cts:arabLit:0460AbuIshaqIlbiri.Diwan.JK007563-ara1:ms12# إلا البلى % % وسكنى القبور وهول الحساب % % 5(@)(@@) % فأيقظها العتب من نومها % % ولكنها جمة الإضطراب % % 6(@)(@@) % فكم أنشأت مزنة للتقى % % وعادت وشيكا كلمع السراب % % 7(@)(@@) % وكم وعدتني بتوب وكم % % وما أنجزت وعدها في المتاب % % 8(@)(@@) % وكم خدعتني على أنني % % بصير بطرق الخطا والصواب % % 9(@)(@@) % فلست على الأمن من غدرها % % ولو حلفت لي بآي الكتاب % % PageV01P042 البحر : - 1(@)(@@) % يا أيها المغتر بالله % % فر من الله إلى الله % % 2(@)(@@) % ولذ به واسأله من فضله % % فقد نجا من لاذ بالله % % 3(@)(@@) % وقم له الليل في جنحه % % فحبذا من قام لله % % 4(@)(@@) % وأتل من الوحي ولو آية % % تكسى بها نورا من الله % % 5(@)(@@) % وعفر الوجه له ساجدا % % فعو وجه ذل من الله % % 6(@)(@@) % فما نعيم كمناجاته % % لقانت يخلص لله % % 7(@)(@@) % وابعد عن الذنب ولا تاته % % فبعد قرب من الله % % 8(@)(@@) % يا طالبا جاها بغير التقى % % جهلت ما يدني من الله % % 9(@)(@@) % لا جاه يوم القضا % % إذ ليس حكم لسوى الله % % 10(@)(@@) % وصار من يسعد في جنة % % عالية في رحمة الله % % PageV01P043 11(@)(@@) % يسكن في الفردوس في قبة % % من لؤلؤ في جيزة الله % % 12(@)(@@) % ومن يكن يقضى عليه الشقا % % في جاحم في سخط الله % % 13(@)(@@) % يسحب في النار على وجهه % % بسابق الحكم من الله % % 14(@)(@@) % يا عجبا من موقن بالجزا % % وهو قليل الخوف لله % % 15(@)(@@) % كأنه قد جاءه مخبر % % بأمنه من قبل الله % % 16(@)(@@) % يا رب جبار شديد القوى % % أصابه سهم من الله % % 17(@)(@@) % فأنفذ المقتل منه وكم % % أصمت وتصمي أسهم الله % % 18(@)(@@) % وغاله الدهر ولم تغنه % % أنصاره شيئا من الله % % 19(@)(@@) % واستل قسرا من قصور إلى % % ال أجداث واستسلم لله % % 20(@)(@@) % مرتهنا فيها بما قد جنى % % يخشى عليه غضب الله % % PageV01P044 21(@)(@@) % ليس له حول ولا قوة % % الحول والقوة لله % % 22(@)(@@) % يا صاح سر في الأرض كيما ترى % % ما فوقها من عبر الله % % 23(@)(@@) % وكم لنا من عبرة تحتها % % في أمم صارت إلى الله % % 24(@)(@@) % من ملك منهم ومن سوقة % % حشرهم هين على الله % % 25(@)(@@) % والحظ بعينك أديم السما % % وما بها من حكمة الله % % 26(@)(@@) % ترى بها الأفلاك دوارة % % شاهدة بالملك لله % % 27(@)(@@) % ما وقفت مذ اجريت لمحة % % أو دونها خوفا من الله % % 28(@)(@@) % وما عليها من حساب ولا % % تخشى الذي 
urn:cts:arabLit:0460AbuIshaqIlbiri.Diwan.JK007563-ara1:ms13# يخشى من الله % % 29(@)(@@) % وهي وما غاب وما قد بدا % % من آية في قبضة الله % % 30(@)(@@) % وما تسمى أحد في السما % % والأرض غير الله بالله % % PageV01P045 31(@)(@@) % إن الحمد حمى الله منيع فما % % يقرب شيء من حمى الله % % 32(@)(@@) % لا شيء في الأفواه أحلى من % % الت وحيد والتمجيد لله % % 33(@)(@@) % ولا اطمأن القلب إلا لمن % % يعمره بالذكر لله % % 34(@)(@@) % وإن رأى في دينه شبهة % % أمسك عنها خشية الله % % 35(@)(@@) % أو عرضته فاقة أو غنى % % لاقاهما بالشكر لله % % 36(@)(@@) % ومن يكن في هديه هكذا % % كان خليقا برضى الله % % 37(@)(@@) % وكان في الدنيا وفي قبره % % وبعده في ذمة الله % % 38(@)(@@) % وفي غد تبصره آمنا % % لخوفه اليوم من الله % % 39(@)(@@) % ما أقبح الشيخ الذي إذا ما صبا % % وعاقه الجهل عن الله % % 40(@)(@@) % وهو من العمر على بازل % % يحمله حثا إلى الله % % PageV01P046 41(@)(@@) % هلا اذا أشفى رأى شيبه % % ينعاه فاستحيى من الله % % 42(@)(@@) % كأنما رين على قلبه % % فصار محجوبا عن الله % % 43(@)(@@) % ما يعذر الجاهل في جهله % % فضلا عن العالم بالله % % 44(@)(@@) % داران لا بد لنا منهما % % بالفضل والعدل من الله % % 45(@)(@@) % ولست أدري منزلي منهما % % لكن توكلت على الله % % 46(@)(@@) % فاعجب لعبد هذه حاله % % كيف نبا عن طاعة الله % % 47(@)(@@) % واسوأتا إن خاب ظني غدا % % ولم تسعني رحمة الله % % 48(@)(@@) % كم سوءة مستورة عندنا % % يكشفها العرض على الله % % 49(@)(@@) % في مشهد فيه جميع الورى % % قد نكسوا الأذقان لله % % 50(@)(@@) % وكم ترى من فائز فيهم % % جلله ستر من الله % % PageV01P047 51(@)(@@) % فالحمد لله على نعمة % % الإسلم ثم الحمد لله % % PageV01P048 البحر : - 1(@)(@@) % ما عيدك الفخم إلا يوم يغفر لك % % لا أن تجر به مستكبرا حللك % % 2(@)(@@) % كم من جديد ثياب دينه خلق % % تكاد تلعنه الأقطار حيث سلك % % 3(@)(@@) % وكم مرقع أطمار جديد تقى % % بكت عليه السما والأرض حين هلك % % 4(@)(@@) % ما ضر ذلك طمراه ولا نفعت % % هذا حلاه ولا أن الرقاب ملك % % PageV01P049 البحر : - 1(@)(@@) % أي خطيئاتي ابكي دما % % وهي كثير كنجوم السما % % 2(@)(@@) % قد طمست عقلي فما أهتدى % % وأورثت عين فؤادي العمى % % 3(@)(@@) % إنا إلى الله لقد حل بي % % خطب غدا صبحي به مظلما % % PageV01P050 البحر : - 1(@)(@@) % لبرزت في ميدان كل بطالة % % وبرز غيري في التقى أي تبريز % % 2(@)(@@) % إذا 
urn:cts:arabLit:0460AbuIshaqIlbiri.Diwan.JK007563-ara1:ms14# لم يكن فهمي إلى الخير قائدي % % فلا كان فهمي لا ولا كان تمييزي % % 3(@)(@@) % تطلبت إخوان الصفا فوجدتهم % % زيوفا كأعمالي ومن لي بإبريز % % PageV01P051 البحر : - 1(@)(@@) % ألا حي العقاب وقاطنيه % % وقل أهلا به وبزائريه % % 2(@)(@@) % حللت به فنفس ما بنفسي % % وأنسني فما استوحشت فيه % % 3(@)(@@) % وكم ذيب نجاوره ولكن % % رأيت المرء يؤتى من أخيه % % 4(@)(@@) % وأيأسني من الأيام أني % % رأيت الوجه يزهد في الوجيه % % 5(@)(@@) % فآثرت البعاد على التداني % % لأني لم أجد من أصطفيه % % PageV01P052 البحر : - 1(@)(@@) % يضيع مفروض ويغفل واجب % % وإني على أهل الزمان لعاتب % % 2(@)(@@) % أتندب أطلال البلاد ولا يرى % % لإلبيرة منهم على الأرض نادب % % 3(@)(@@) % على أنها شمس البلاد وأنسها % % وكل سواها وحشة وغياهب % % 4(@)(@@) % وكم من مجيب كان فيها لصارخ % % تجاب إلى جدوى يديه السباسب % % 5(@)(@@) % وكم من نجيب أنجبته وعالم % % بأبوابهم كانت تناخ الركائب % % 6(@)(@@) % وكم بلغت فيها الأماني وقضيت % % لصب لبانات بها ومآرب % % 7(@)(@@) % وكم طلعت منها الشموس وكم مشت % % على الأرض أقمار بها وكواكب % % 8(@)(@@) % وكم فرست فيها الظباء ضراغما % % وكم صرعت فيها الكماة كواعب % % 9(@)(@@) % لعهدي بها مبيضة الليل فاعتذت % % وأيامها قد سودتها النوائب % % 10(@)(@@) % وما كان فيها غير بشرى وأنعم % % فلم يبق فيها الآن إلا المصائب % % PageV01P053 11(@)(@@) % غدت بعد ربات الحجال قصورها % % يبابا تغاديها الصبا والجنائب % % 12(@)(@@) % فآه ألوفا تقتضي عدد الحصا % % على عهدها ما عاهدتها السحائب % % 13(@)(@@) % عجبت لما ادري بها من عجيبة % % فياليت شعري أين تلك العجائب % % 14(@)(@@) % وما فعلت أعلامها وفئامها % % وأرامها أم أين تلك المراتب % % 15(@)(@@) % وأين بحار العلم والحلم والندى % % وأين الأكف الهاميات السواكب % % 16(@)(@@) % شققنا على من مات منهم جيوبنا % % وكان قليلا أن تشق الترائب % % 17(@)(@@) % وإن فقدت أعيانهم فلتوجدن % % مدى الدهر أفعال لهم ومناقب % % 18(@)(@@) % وقد بقيت في الأرض منهم بقية % % كأنهم فيها نجوم ثواقب % % 19(@)(@@) % فلله ثاويهم ولله حيهم % % فكل جواد باهر الفضل واهب % % 20(@)(@@) % لساءلت عنهم رسمها فأجابني % % ألا كل شيء ما خلا الله ذاهب % % PageV01P054 21(@)(@@) % يخاطبنا أن قد أخذت بذنبكم % % وما أحد منكم عن الذنب تائب % % 22(@)(@@) % وأن قد قست اكبادكم وقلوبكم % % وما منكم داع إلى الله راغب % % 23(@)(@@) % لشكلكم أولى وأجدر بالبكا % % على مثله حقا تقوم النوادب % % PageV01P055 البحر : - 1(@)(@@) % عج بالمطي على 
urn:cts:arabLit:0460AbuIshaqIlbiri.Diwan.JK007563-ara1:ms15# اليباب الغامر % % واربع على قبر تضمن ناظري % % 2(@)(@@) % فستستبين مكانه بضجيعه % % وينم منه إليك عرف العاطر % % 3(@)(@@) % فلكم تضمن من تقى وتعفف % % وكريم أعراق وعرض طاهر % % 4(@)(@@) % واقر السلام عليه من ذي لوعة % % صدعته صدعا ما له من جابر % % 5(@)(@@) % فعساه يسمح لي بوصل في الكرى % % متعاهدا لي بالخيال الزائر % % 6(@)(@@) % فأعلل القلب العليل بطيفه % % علي أوافيه ولست بغادر % % 7(@)(@@) % إني لأستحييه وهو مغيب % % في لحده فكأنه كالحاضر % % 8(@)(@@) % ارعى أذمته وأحفظ عهده % % عندي فما يجري سواه بخاطري % % 9(@)(@@) % إن كان يدثر جسمه في رمسه % % فهواي فيه الدهر ليس بداثر % % 10(@)(@@) % قطع الزمان معي بأكرم عشرة % % لهفي عليه من أبر معاشر % % PageV01P056 11(@)(@@) % ما كان إلا ندرة لا أرتجي % % عوضا بها فرثيته بنوادر % % 12(@)(@@) % ولو انني أنصفته في وده % % لقضيت يوم قضى ولم أستاخر % % 13(@)(@@) % وشققت في خلب الفؤاد ضريحه % % وسقيته أبدا بماء محاجري % % 14(@)(@@) % أجد الحلاوة في الفؤاد بكونه % % فيه وأرعاه بعين ضمائري % % 15(@)(@@) % لسألت مغفرة له وتجاوزا % % عنه من الرب الجواد الغافر % % 16(@)(@@) % أخلق ببمثلي أن يرى متطلبا % % حوراء ذات غدائر وأساور % % 17(@)(@@) % مقصورة في قبة من لؤلؤ % % ذخرت ثوابا للمصاب الصابر % % 18(@)(@@) % لخلت ذراعي وانفردت فإن أكن % % تاجرت فيها كنت أربح تاجر % % 19(@)(@@) % ولئن حرمت ولم يفز قدحي بها % % فأنا لعمر الله أخسر خاسر % % 20(@)(@@) % من جاوز الستين لم يجمل به % % شغل بجمل والرباب وغادر % % PageV01P057 21(@)(@@) % بل شغله في زاده لمعاده % % فالزاد آكد شغل كل مسافر % % 22(@)(@@) % والشيخ ليس قصاره إلا التقى % % لا أن يهيم صبابة بجاذر % % 23(@)(@@) % نفرت طباع الغيد عنه كراهة % % ومن العناء علاقة بمنافر % % 24(@)(@@) % هل يلتقي قرن بقرن في الوغي % % إلا بأزرق أو بعضب باتر % % 25(@)(@@) % وإذا تقحم أعزل في مأزق % % كان الأسير ولم يكن بالآسر % % 26(@)(@@) % ما يشتهي نهدا ولحظا فاترا % % إلا خلي في زمان فاتر % % 27(@)(@@) % حسبي كتاب الله فهو تنعمي % % وتأنسي في وحشتي بدفاتري % % 28(@)(@@) % أفتض أبكارا بها يغسلن من % % يفتضهن بكل معنى طاهر % % 29(@)(@@) % وإذا أردت نزاهة طالعتها % % فأجول منها في أنيق زاهر % % 30(@)(@@) % وأرى بها نهج الهداية واضحا % % ينجو به من ليس عنه بجائر % % PageV01P058 31(@)(@@) % قد آن لي أن أستفيق وأرعوي % % لو أنني ممن تصح بصائري % % 32(@)(@@) % فلكم أروح وأغتدي 
urn:cts:arabLit:0460AbuIshaqIlbiri.Diwan.JK007563-ara1:ms16# في غمرة % % مترددا فيها كمثل الحائر % % 33(@)(@@) % وأرى شبابي ظاعنا في عسكر % % عني وشيبي وافدا بعساكر % % 34(@)(@@) % فغدت مظفرة علي ولم تزل % % قدما معلاة قداح الظافر % % 35(@)(@@) % ولقد رأيت من الزمان عجائبا % % جربتها بمواردي ومصادري % % 36(@)(@@) % فوجدت إخوان الصفا بزعمهم % % يلقاك أمحضهم بعرض سابري % % 37(@)(@@) % ولر بما قد شذ منهم نادر % % وأصولنا أن لا قياس بنادر % % 38(@)(@@) % وإذا نبا بي منزل أو رانبي % % صفقت عنه كالعقاب الكاسر % % 39(@)(@@) % فأجوب أرضا سهلها كحزونها % % عندي وأول قطرها كالآخر % % 40(@)(@@) % ولقد عجبت لمؤمن في شدقه % % جرس كناقوس ببيعة كافر % % PageV01P059 41(@)(@@) % لسن يهينم دائبا ولما يرى % % أن اللسان كمثل ليث هاصر % % 42(@)(@@) % ولو أنني أدعو الكلام أجابني % % كاجابة المأسور دعوة آسر % % 43(@)(@@) % لكن رأيت نبينا قد عابه % % من كل ثرثار وأشدق شاعر % % 44(@)(@@) % فصمت إلا عن تقى ولربما % % قذفت بحار قريحتي بجواهر % % 45(@)(@@) % ما استحسنوا طول الخطابة بل رأوا % % تقصيرها مهما ارتقوا بمنابر % % 46(@)(@@) % ولما رأوا سرد الكلام بسائغ % % إلا لعبد قارىء أو ذاكر % % 47(@)(@@) % فالعي في الإكثار لا في منطق % % يهدي إلى الألباب نفثة ساحر % % 48(@)(@@) % ولقد أقول لبعض من هو عاذلي % % في القصد في شاني وليس بعاذري % % 49(@)(@@) % لما رأيت الأرض أصبح ماؤها % % رنقا كفتني منه حسوة طائر % % 50(@)(@@) % ولو أنني أرضى القذا في مشربي % % لكرعت كرعة ظامىء بهواجر % % PageV01P060 51(@)(@@) % وعبرت بحر الرزق التمس الغنى % % حرصا عليه وكنت أمهر ماهر % % 52(@)(@@) % لكنني عوضت منه عناية % % بقناعة وتجمل في الظاهر % % 53(@)(@@) % فمن الغنى ما قد يضر بأهله % % والفقر عند الله ليس بضائر % % 54(@)(@@) % ولقد أصبت من المطاعم حاجتي % % ومن الملابس فوق ما هو ساتري % % 55(@)(@@) % وأنا لعمرك مكرم في جيرتي % % ومعظم ومبجل بعشائري % % 56(@)(@@) % وغذا بميدان السباق سنلتقي % % فيرى الثقيل من الخفيف الضامر % % 57(@)(@@) % واسوأتا إن كنت سكيتا به % % أرجو اللحاق على هجين عاثر % % PageV01P061 البحر : - 1(@)(@@) % والويل كل الويل لي إن لم يكن % % مولاي في تلك الشدائد ناصري % % 2(@)(@@) % إني لأشكره على آلائه % % فهو الوفي بعهده للشاكر % % 3(@)(@@) % وإليه أضرع في إنابة مخلص % % فهو الذي أرجو لسد مفاقري % % PageV01P062 البحر : - 1(@)(@@) % ما عناء الكبير بالحسناء % % وهو مثل الحباب فوق الماء % % 2(@)(@@) % يتصابى ولات حين تصاب % % بعيون المها وسرب الظباء % % 3(@)(@@) % ولعمري لما تحب فتاة % % يفنا 
urn:cts:arabLit:0460AbuIshaqIlbiri.Diwan.JK007563-ara1:ms17# لو غدا من الخلفاء % % 4(@)(@@) % وتحب الفتى الرقيق الحواشي % % حب ذي الجدب صادق الأنواء % % 5(@)(@@) % كيف لا وهو يهنأ النقب منها % % بهناء يزيد في البرحاء % % 6(@)(@@) % لحكاها لطافة وحكته % % فهما في الهوى كمزج الهواء % % 7(@)(@@) % لا كصاد أناخ عند قليب % % دون دلو يدلي به ورشاء % % 8(@)(@@) % يلحظ الماء حسرة وهو منه % % متدان في حالة المتنائي % % 9(@)(@@) % كل قرن يعد سيفا كليلا % % للقاء يخونه في اللقاء % % 10(@)(@@) % فمن الرأي أن تكون جبانا % % سامريا يدين بالانزواء % % PageV01P063 11(@)(@@) % عجبا كم رأيت مالا مصونا % % وفؤادا نهبا بأيدي النساء % % 12(@)(@@) % وإذا حازم على المال أبقى % % فقواه أحق بالإبقاء % % 13(@)(@@) % فتساوى الرجال في مثل هذا % % فالمجانين فيه كالعقلاء % % 14(@)(@@) % أي خير لوالد في بنيه % % وهو عنهم يفر يوم الجزاء % % 15(@)(@@) % والتقي الموفق البر منهم % % عدم كالسماع بالعنقاء % % 16(@)(@@) % وإذا ما الأديب شبه فيهم % % جر أذياله من الخيلاء % % 17(@)(@@) % وازدرى بالشيوخ واعترض الدأ % % ماء جهلا بنفثة الرقاء % % 18(@)(@@) % ذنب أبتر لعمرك خير % % من طويل يجر في الأقذاء % % 19(@)(@@) % ومن الغبن هجر دار خلود % % وبقاء ووصل دار الفناء % % 20(@)(@@) % واشتغال بفرتنى وبلبنى % % وبدعد عن خطبة الحوراء % % PageV01P064 21(@)(@@) % ولئن عاد ليل رأسي صبحا % % ووشى بي شيبي إلى الحسناء % % 22(@)(@@) % إن عودي لعاجميه لصلب % % وفؤادي كصارم مضاء % % 23(@)(@@) % وأقضي لبانتي وأروي % % عامل الرمح من دم العذراء % % 24(@)(@@) % وأنا قرة لعين صديقي % % وقذى في محاجر الأعداء % % 25(@)(@@) % هذبتني نوائب الدهر حتى % % صرت كالوصل بعد طول الجفاء % % 26(@)(@@) % فسفيني تجري بأطيب ريح % % لا بريح ضعيفة نكباء % % 27(@)(@@) % بعلي بن توبة فاز قدحي % % وسمت همتي على الجوزاء % % 28(@)(@@) % فهنيئا لنا وللدين قاض % % مثله عالم بفصل القضاء % % 29(@)(@@) % يحسم الأمر بالسياسة والعدل % % ل كحسم الحسام للأعداء % % 30(@)(@@) % لو إياس يلقاه قال اعترافا % % غلط الواصفون لي بالذكاء % % PageV01P065 31(@)(@@) % ولو أن الدهاة من كل عصر % % خبروه دانوا له بالدهاء % % 32(@)(@@) % أو رأى أحنف أو احلم منه % % حلمه ما انتموا إلى الحلماء % % 33(@)(@@) % لو رأى أحنفت أو احلم منه % % حلمه ما انتموا إلى الحلماء % % 34(@)(@@) % لو رأى المنصفون بحر نداه % % جعلوا حاتما من البخلاء % % 35(@)(@@) % هو أوفى من السموءل عهدا % % ولما زال معرما بالوفاء % % 36(@)(@@) % وحيا المزن ذو حياء إذا ما % % هملت كفه بوبل العطاء % % 37(@)(@@) % يشهد العالمون في كل فن 
urn:cts:arabLit:0460AbuIshaqIlbiri.Diwan.JK007563-ara1:ms18# % % أنه كالشهاب في العلماء % % 38(@)(@@) % وقضاة الزمان أرض لديه % % وهو من فوقهم كأفق السماء % % 39(@)(@@) % لتعرضت مدحه فكأني % % رمت بحرا مساجلا بالدلاء % % 40(@)(@@) % فأنا مفحم على أن خيلي % % لا تجارى في حلبة الشعراء % % PageV01P066 41(@)(@@) % لكساني بمجده ثوب فخر % % طال حتى جررته من ورائي % % 42(@)(@@) % ولو انصفته وذاك قليل % % كان خدي لرجله كالحذاء % % 43(@)(@@) % فأنا عبده وذاك فخاري % % وجمالي بين الورى وبهائي % % 44(@)(@@) % وثنائي وقف عليه وشكري % % ودعائي له بطول البقاء % % PageV01P067 البحر : - 1(@)(@@) % ويل لأهل النار في النار % % ماذا يقاسون من النار % % 2(@)(@@) % تنقد من غيظ فتغلي بهم % % كمرجل يغلي على النار % % 3(@)(@@) % فيستغيثون لكي يعتبوا % % ألا لعا من عثرة النار % % 4(@)(@@) % وكلهم معترف نادم % % لو تقبل التوبة في النار % % 5(@)(@@) % يهوي بها الأشقى على رأسه % % فالويل للأشقى من النار % % 6(@)(@@) % فتارة يطفو على جمرها % % وتارة يرسب في النار % % 7(@)(@@) % وكلما رام فرارا بها % % فر من النار إلى النار % % 8(@)(@@) % يطوف من أفعى إلى أرقم % % وسمها أقوى من النار % % 9(@)(@@) % وكم بها من أرقم لا يني % % يلسع من يسحب في النار % % 10(@)(@@) % لا راحة فيها ولا فترة % % هيهات لا راحة في النار % % PageV01P068 11(@)(@@) % أنفاسها مطبقة فوقهم % % وهكذا الأنفاس في النار % % 12(@)(@@) % سبحان من يمسك أرواحهم % % في الدرك الأسفل في النار % % 13(@)(@@) % ولو جبال الأرض تهوي بها % % ذابت كذوب القطر في النار % % 14(@)(@@) % طوبى لمن فاز بدار التقى % % ولم يكن من حصب النار % % 15(@)(@@) % وويل من عمر دهرا ولم % % يرحم ولم يعتق من النار % % 16(@)(@@) % يا أيها الناس خذوا حذركم % % وحصنوا الجنة للنار % % 17(@)(@@) % فإنها من شر أعدائكم % % ما في العدا أعدى من النار % % 18(@)(@@) % وأكثروا من ذكر مولاكم % % فذكره ينجي من النار % % 19(@)(@@) % وا عجبا من مرح لا عب % % يلهو ولا يحفل بالنار % % 20(@)(@@) % يوقن بالنار ولا يرعوي % % كأنه يرتاب في النار % % PageV01P069 21(@)(@@) % وهو بها في خطر بين % % لو كاس ما خاطر بالنار % % 22(@)(@@) % إن الألباء هم قلة % % فروا إلى الله من النار % % 23(@)(@@) % وطلقوا الدنيا بتاتا ولم % % يلووا عليها حذر النار % % 24(@)(@@) % وأبصروا من عيبها أنها % % فتانة تدعو إلى النار % % 25(@)(@@) % فطابت الأنفس منهم بأن % % أمنهم من فزع النار % % 26(@)(@@) % والله لو أعقل لم تكتحل % % بالنوم عيني خيفة النار % % 27(@)(@@) % ولا رقا دمعي ولا 
urn:cts:arabLit:0460AbuIshaqIlbiri.Diwan.JK007563-ara1:ms19# علم % % لي أني في أمن من النار % % 28(@)(@@) % ولم أرد ماء ولا ساغ لي % % إذا ذكرت المهل في النار % % 29(@)(@@) % ولم أجد لذة طعم إذا % % فكرت في الزقوم في النار % % 30(@)(@@) % أي التذاذ بنعيم إذا % % أدى إلى الشقوة في النار % % PageV01P070 31(@)(@@) % أم أي خير في سرور إذا % % أعقب طول الحزن في النار % % 32(@)(@@) % ففكروا في هولها واحذروا % % ما حذر الله من النار % % 33(@)(@@) % فإنها راصدة أهلها % % تدعهم دعا إلى النار % % 34(@)(@@) % فليس مثلي طالبا حبة % % إلا المعافاة من النار % % 35(@)(@@) % وطالما استرحمته ضارعا % % يا رب حرمني على النار % % 36(@)(@@) % فأنت مولاي ولا رب لي % % غيرك أعتقني من النار % % 37(@)(@@) % ولم تزل تسمعني قائلا % % أعوذ بالله من النار % % PageV01P071 البحر : - 1(@)(@@) % بصرت بشيبة وخطت نصلي % % فقلت له تأهب للرحيل % % 2(@)(@@) % ولا يهن القليل عليك منها % % فما في الشيب ويحك من قليل % % 3(@)(@@) % وكم قد ابصرت عيناك مزنا % % أصابك طلها قبل الهمول % % 4(@)(@@) % وكم عاينت خيط الصبح يجلو % % سواد الليل كالسيف الصقيل % % 5(@)(@@) % ولا تحقر بنذر الشيب واعلم % % بأن القطر يبعث بالسيول % % 6(@)(@@) % فكم ممن مفارقه ثغام % % وأنجمه على فلك الأفول % % 7(@)(@@) % تعوض من ذراع الخطو فترا % % ومن عضب بمفلول كليل % % 8(@)(@@) % فكيف بمثله لمهاة رمل % % كأن وصالها نوم العليل % % 9(@)(@@) % تطلب غير ما في الطبع صعب % % عليك فدع طلاب المستحيل % % 10(@)(@@) % ولازم قرع باب الرب دأبا % % فإن لزومه سبب الدخول % % PageV01P072 البحر : - 1(@)(@@) % ألا قل لصنهاجة أجمعين % % بدور الندي وأسد العرين % % 2(@)(@@) % لقد زل سيدكم زلة % % تقر بها أعين الشامتين % % 3(@)(@@) % تخير كاتبه كافرا % % ولو شاء كان من المسلمين % % 4(@)(@@) % فعز اليهود به وانتخوا % % وتاهوا وكانوا من الأرذلين % % 5(@)(@@) % ونالوا مناهم وجازوا المدى % % فحان الهلاك وما يشعرون % % 6(@)(@@) % فكم مسلم فاضل قانت % % لأرذل قرد من المشركين % % 7(@)(@@) % وما كان ذلك من سعيهم % % ولكن منا يقوم المعين % % 8(@)(@@) % فهلا اقتدى فيهم بالألى % % من القادة الخيرة المتقين % % 9(@)(@@) % وأنزلهم حيث يستاهلون % % وردهم أسفل السافلين % % 10(@)(@@) % وطافوا لدينا بأخراجهم % % عليهم صغار وذل وهون % % PageV01P073 11(@)(@@) % وقموا المزابل عن خرقة % % ملونة لدثار الدفين % % 12(@)(@@) % ولم يستخفوا بأعلامنا % % ولم يستطيلوا على الصالحين % % 13(@)(@@) % ولا جالسوهم وهم هجنة % % ولا واكبوهم مع الأقربين % % 14(@)(@@) % أباديس أنت امرؤ حاذق % % تصيب بظنك نفس اليقين % % 15(@)(@@) % فكيف اختفت عنك 
urn:cts:arabLit:0460AbuIshaqIlbiri.Diwan.JK007563-ara1:ms20# أعيانهم % % وفي الأرض تضرب منها القرون % % 16(@)(@@) % وكيف تحب فراخ الزنا % % وهم بغضوك إلى العالمين % % 17(@)(@@) % وكيف يتم لك المرتقى % % إذا كنت تبني وهم يهدمون % % 18(@)(@@) % وكيف استنمت إلى فاسق % % وقارنته وهو بيس القرين % % 19(@)(@@) % وقد أنزل الله في وحيه % % يحذر عن صحبة الفاسقين % % 20(@)(@@) % فلا تتخذ منهم خادما % % وذرهم إلى لعنة اللاعنين % % PageV01P074 21(@)(@@) % فقد ضجت الأرض من فسقهم % % وكادت تميد بنا اجمعين % % 22(@)(@@) % تأمل بعينيك أقطارها % % تجدهم كلابا بها خاسئين % % 23(@)(@@) % وكيف انفردت بتقريبهم % % وهم في البلاد من المبعدين % % 24(@)(@@) % على أنك الملك المرتضى % % سليل الملوك من الماجدين % % 25(@)(@@) % وأن لك البق بين الورى % % كما أنت من جلة السابقين % % 26(@)(@@) % وإني احتللت بغرناطة % % فكنت أراهم بها عابثين % % 27(@)(@@) % وقد قسموها وأعمالها % % فمنهم بكل مكان لعين % % 28(@)(@@) % وهم يقبضون جباياتها % % وهم يخضمون وهم يقضمون % % 29(@)(@@) % وهم يلبسون رفيع الكسا % % وأنتم لأوضعها لابسون % % 30(@)(@@) % وهم أمناكم على سركم % % وكيف يكون خؤون أمين % % PageV01P075 31(@)(@@) % ويأكل غيرهم درهما % % فيقصى ويدنون إذ يأكلون % % 32(@)(@@) % وقد ناهضوكم إلى ربكم % % فما تمنعون ولا تنكرون % % 33(@)(@@) % وقد لابسوكم بأسحارهم % % فما تسمعون ولا تبصرون % % 34(@)(@@) % وهم يذبحون بأسواقها % % وأنتم لأطرافها آكلون % % 35(@)(@@) % ورخم قردهم داره % % وأجرى إليها نمير العيون % % 36(@)(@@) % فصارت حوائجنا عنده % % ونحن على بابه قائمون % % 37(@)(@@) % ويضحك منا ومن ديننا % % فإنا إلى ربنا راجعون % % 38(@)(@@) % ولو قلت في ماله إنه % % كمالك كنت من الصادقين % % 39(@)(@@) % فبادر إلى ذبحه قربة % % وضح به فهو كبش سمين % % 40(@)(@@) % ولا ترفع الضغط عن رهطه % % فقد كنزوا كل علق ثمين % % PageV01P076 41(@)(@@) % وفرق عراهم وخذ مالهم % % فانت أحق بما يجمعون % % 42(@)(@@) % ولا تحسبن قتلهم غدرة % % بل الغدر في تركهم يعبثون % % 43(@)(@@) % وقد نكثوا عهدنا عندهم % % فكيف تلام على الناكثين % % 44(@)(@@) % وكيف تكون لهم ذمة % % ونحن خمول وهم ظاهرون % % 45(@)(@@) % ونحن الأذلة من بينهم % % كأنا أسأنا وهم محسنون % % 46(@)(@@) % فلا ترض فينا بأفعالهم % % فأنت رهين بما يفعلون % % 47(@)(@@) % وراقب إلهك في حزبه % % فحرب الإله هم الغالبون % % PageV01P077 البحر : - 1(@)(@@) % إن أولي العلم بما في الفتن % % تهيبوها من قديم الزمن % % 2(@)(@@) % فاستعصموا الله وكان التقى % % أوفى لهم فيها من أوفى الجنن % % 3(@)(@@) % واجتمعوا في حسن توفيقه % % وافترقوا في كل سعي حسن % % 4(@)(@@) % فعالم مستمجد عامل % % يسلك بالناس سواء السنن % % 5(@)(@@) % ينثر من 
urn:cts:arabLit:0460AbuIshaqIlbiri.Diwan.JK007563-ara1:ms21# فيه لهم جوهرا % % من علمه ليس له من ثمن % % 6(@)(@@) % يقسمه طلابه بينهم % % قسمة تعديل بقدر الفطن % % 7(@)(@@) % وبهمة مخترط سيفه % % يغمده في هام أهل الوثن % % 8(@)(@@) % يلبس من إيمانه لأمة % % فضاضة يغنى بها عن مجن % % 9(@)(@@) % وحابس في بيته نفسه % % معتزل مستمسك بالسنن % % 10(@)(@@) % يأخذ من دنياه قوتا له % % مقنعا مثل عذار الرسن % % PageV01P078 11(@)(@@) % قد جعل البيت كقبر له % % وبرده فيه له كالكفن % % 12(@)(@@) % فهو خفيف الظهر لكنه % % أثقل في ميزانه من حضن % % 13(@)(@@) % وهارب شحا على دينه % % إلى البراري ورؤوس الفتن % % 14(@)(@@) % يأنس بالوحدة في بيدها % % أكثر من تأنيسه بالسكن % % 15(@)(@@) % لا يرهب الأسد ومن لم يخن % % سيده في عهده لم يخن % % 16(@)(@@) % وتائب من ذنبه مشفق % % يبكي بكاء الواكفات الهتن % % 17(@)(@@) % تخاله بين يدي ربه % % في ظلم الليل كمثل الغصن % % 18(@)(@@) % إن مهد الناس لدنياهم % % شمر في تمهيده للجنن % % 19(@)(@@) % كأنما الأرض له أيكة % % وهو بها قمرية في فنن % % 20(@)(@@) % وصامت في قلبه مقول % % بالذكر لله طويل لسن % % PageV01P079 21(@)(@@) % تراه كالأبله في ظاهر % % وهو من اذكى الناس فيما يظن % % 22(@)(@@) % قد نور الله له قلبه % % بالذكر في السر له والعلن % % 23(@)(@@) % فإن يبن بالفكر عن صحبه % % فجسمه بينهم لم يبن % % 24(@)(@@) % إن لغوا جليس لهم % % لم يلج اللغو له في أذن % % 25(@)(@@) % في ملكوت الله سبحانه % % تجول ألباب لباب الفطن % % 26(@)(@@) % فهم خصوص الله نحو التي % % من حل في جيرتها قد أمن % % 27(@)(@@) % ونزهوا الأنفس عن منزل % % نازله مستوفز للظعن % % 28(@)(@@) % وسمروا الخيل ليوم به % % ينكب من يركب فوق الهجن % % 29(@)(@@) % فليتني كنت لهم خادما % % وليتني إذ لم أكن لم أكن % % 30(@)(@@) % ومن سواهم فرجال رجوا % % أن يعبروا البحر بغير السفن % % PageV01P080 31(@)(@@) % وإنما قصر بي عنهم % % حبي لدار ملئت بالفتن % % 32(@)(@@) % لا غارت الدنيا ولا أنجدت % % فالعاقل الحر بها ممتحن % % 33(@)(@@) % تميل للأحمق من اهلها % % وهي على عاقلهم تضطغن % % 34(@)(@@) % يا عجبا من غفلتي بعد أن % % ناداني الشيب ألا فارحلن % % 35(@)(@@) % وأدرك الفائت من قبل ان % % يفجأك الموت فلا تنظرن % % 36(@)(@@) % اقبح من ترمقه مقلة % % مبصرة شيخ خليع الرسن % % 37(@)(@@) % تقتاده الدهر دواعي الهوى % % إلى الصبا مثل اقتياد البدن % % 38(@)(@@) % يأمل آمال فتى يافع % % كأنه ليس بشيخ يفن % % 39(@)(@@) % ليس جمال 
urn:cts:arabLit:0460AbuIshaqIlbiri.Diwan.JK007563-ara1:ms22# الشيخ إلا التقى % % والمحو للسؤ بفعل حسن % % 40(@)(@@) % شغلت بالوصف ولو أنني % % أشغل بالموصوف كنت الفطن % % PageV01P081 41(@)(@@) % ولم أبع رشدا بغي ولم % % أرض بعقلي مثل هذا الغبن % % 42(@)(@@) % إنا إلى الله لقد حاق بي % % ما يورث الخزي غدا والحزن % % 43(@)(@@) % والحمد لله ففي كفه % % منح لمن شاء وفيها المنن % % 44(@)(@@) % وهو الذي أرجو فإن لم يكن % % عند رجائي فيه طولا فمن % % PageV01P082 البحر : - 1(@)(@@) % تمر لداتي واحدا بعد واحد % % واعلم أني بعدهم غير خالد % % 2(@)(@@) % وأحمل موتاهم وأشهد دفنهم % % كأني بعيد منهم غير شاهد % % 3(@)(@@) % فها أنا في علمي بهم وجهالتي % % كمستيقظ يرنو بمقلة راقد % % PageV01P083 البحر : - 1(@)(@@) % ما توج الملك إلا بابن سلمان % % ولا يشد سواه أزر سلطان % % 2(@)(@@) % ما الريح في سيرها تحكي عزائمه % % إلا الجياد إذا جدت بأقران % % 3(@)(@@) % كانت جزيرتنا من قبل أندلسا % % فمذ نشأت بها فهي العراقان % % 4(@)(@@) % نهدي إليك القوافي وهي طيبة % % كالراح تهدى زفافا بين خلان % % 5(@)(@@) % مالي تلاحظني عين الخطوب وقد % % أسندت منك إلى ركن كثهلان % % 6(@)(@@) % وكيف يشكو الصدى مثلي على مقتي % % وماؤك الغمر يروي كل ظمآن % % 7(@)(@@) % أم كيف يطمح شيطان إلى افقي % % ومن سمائك يرمى كل شيطان % % 8(@)(@@) % بل كيف يغمرني إنسان أعينهم % % وأنت لي وزر من كل إنسان % % 9(@)(@@) % نبه أبا حسن للمعضلات ونم % % نوم العروس على روح وريحان % % PageV01P084 البحر : - 1(@)(@@) % رفعتم على قاضيكم فخفضتم % % وحاولتم خزيا له فخزيتم % % 2(@)(@@) % وطال لعمري ما سعدتم بسعده % % ولو أنه يشقى إذن لشقيتم % % 3(@)(@@) % وما كان إلا ستركم لو عقلتم % % ولكنكم عن رشدكم قد عميتم % % 4(@)(@@) % وحكوا على ظهر الصعيد ستاهكم % % فلن تعشروه في العلى لو خريتم % % PageV01P085 البحر : - 1(@)(@@) % أيا قوس خراط يشير ولا يرمي % % ويا سيف رعديد يرض ولا يدمي % % 2(@)(@@) % تعلمت خلف الوعد من برق خلب % % فبرقك لا يثري ولكنه يعمي % % PageV01P086 البحر : - 1(@)(@@) % السواط أبلغ من قال ومن قيل % % ومن نباح سفيه بالأباطيل % % 2(@)(@@) % مر المذاق كحر النار أبرده % % يعقل المتعاطي أي تعقيل % % 3(@)(@@) % رأى من الطب ما بقراط لم يره % % في برء كل سخيف العقل مخذول % % 4(@)(@@) % عند السخيف به خبر وتجربة % % فقد رمى تحته ما عد بالفول % % 5(@)(@@) % وقد حسا منه امراقا مفلفلة % % جشته شر الجشا من 
urn:cts:arabLit:0460AbuIshaqIlbiri.Diwan.JK007563-ara1:ms23# شر مأكول % % 6(@)(@@) % وقد هجاه بهجو مؤلم وجع % % لا يشبه الشعر في نظم وتفصيل % % 7(@)(@@) % فقل له إن جرى هجو بخاطره % % أذكر قيامك محلول السراويل % % 8(@)(@@) % واذكر طوافك في الأسواق مفتضحا % % مجردا خاشعا في ذل معزول % % 9(@)(@@) % واذكر عقوبة ما زورته سفها % % في السادة القادة الشم البهاليل % % 10(@)(@@) % عصابة عظم الرحمن حرمتها % % وخصها منه إكراما بتبجيل % % PageV01P087 11(@)(@@) % هم لباب الورى حقا وغيرهم % % عند الحقيقة ابقال الغرابيل % % 12(@)(@@) % إن ابن توبة فيهم رافع علما % % من القضاء وممتاز بإكليل % % 13(@)(@@) % قضى بتنكيل من لم يرع حقهم % % وحصن الحكم في هذا بتسجيل % % 14(@)(@@) % الظهر قرطاسه والسوط يطلبه % % بئس الكتاب بعقد غير محلول % % PageV01P088 البحر : - 1(@)(@@) % أيا وزيرا لم يزل آخذا % % عند الملمات بأيدينا % % 2(@)(@@) % وسيدا نحكم في ماله % % وجاهه النامي بما شينا % % 3(@)(@@) % اراك مشغولا بكسب العلا % % وحارسا دنياك والدينا % % 4(@)(@@) % فاجعل من الليل لنا ساعة % % يحكم فيها ماله جينا % % 5(@)(@@) % ولا يكن يحضرنا ثالث % % فربما الثالث يؤذينا % % PageV01P089 البحر : - 1(@)(@@) % أين الملوك وأين ما جمعوا وما % % ذخروه من ذهب المتاع الذاهب % % 2(@)(@@) % ومن السوابغ والصوارم والقنا % % ومن الصواهل بدن وشوازب % % 3(@)(@@) % كانت سوابقها تحمل منهم % % اقمار أندية وأسد كتائب % % 4(@)(@@) % كانوا ليوث خفية لكنهم % % سكنوا غياض اسنة وقواضب % % 5(@)(@@) % قصفتهم ريح الردى ورمتهم % % كف المنون بكل سهم صائب % % 6(@)(@@) % فإن الردى غال أهل التقى % % فلم يبق إلا الغشوم العنيد % % 7(@)(@@) % وأودى بكل خليل ودود % % فأين ولا أين خل ودود % % 8(@)(@@) % وكم من أخي ثقة قد لحدت % % فلله ما غيبته اللحود % % 9(@)(@@) % وأثكلني الأنس ثكل اللدات % % فصرت كأني غريب وحيد % % 10(@)(@@) % وكم من شقي يوارى التراب % % وكم من سعيد يوارى الصعيد % % PageV01P090 البحر : - 1(@)(@@) % لا قوة لي يا ربي فأنتصر % % ولا براءة من ذنبي فأعتذر % % 2(@)(@@) % فإن تعاقب فأهل للعقاب وإن % % تغفر فعفوك مأمول ومنتظر % % 3(@)(@@) % إن العظيم إذا لم يعف مقتدرا % % عن العظيم فمن يعفو ويقتدر % % PageV01P091 البحر : - 1(@)(@@) % وذي غنى أوهمته همته % % أن الغنى عنه غير منفصل % % 2(@)(@@) % فجر أذيال عجبه بطرا % % واختال للكبرياء في حلل % % 3(@)(@@) % بزته أيدي الخطوب بزته % % فاعتاض بعد الجديد بالسمل % % 4(@)(@@) % فلا تثق بالغنى فآفته % % الفقر وصرف الزمان ذو دول % % 5(@)(@@) % كفى بنيل الكفاف منه غنى % % عنه فكن فيه غير محتفل % % PageV01P092 البحر 
urn:cts:arabLit:0460AbuIshaqIlbiri.Diwan.JK007563-ara1:ms24# : - 1(@)(@@) % أتيتك راجيا ياذا الجلال % % ففرج ما ترى من سوء حالي % % 2(@)(@@) % عصيتك سيدي ويلي بجهلي % % وعيب الذنب لم يخطر ببالي % % 3(@)(@@) % لعمرى ليت أمي لم تلدني % % ولم أغضبك في ظلم الليالي % % 4(@)(@@) % فها أنا عبدك العاصي فقير % % إلى رحماك فاقبل لي سؤالي % % 5(@)(@@) % فإن عاقبت يا ربي تعاقب % % محقا بالعذاب وبالنكال % % 6(@)(@@) % وإن تعف فعفوك قد أراني % % لأفعالي وأوزاري الثقال % % PageV01P093 البحر : - 1(@)(@@) % كل امرىء فيما يدين يدان % % سبحان من لم يخل منه مكان % % 2(@)(@@) % يا عامر الدنيا ليسكنها وما % % هي بالتي يبقى بها سكان % % 3(@)(@@) % تفنى وتبقى الأرض بعدك مثلما % % يبقى المناخ وترحل الركبان % % 4(@)(@@) % أأسر في الدنيا بكل زيادة % % وزيادتي فيها هي النقضان % % PageV01P094 البحر : - 1(@)(@@) % كم آمن للمنون لاه % % عن الردى بات مطمئنا % % 2(@)(@@) % صبحه وافد المنايا % % فعاين الموت حين عنا % % 3(@)(@@) % حتى إذا ما قضى بكاه % % حميمه معولا مرنا % % 4(@)(@@) % واروه في لحده وسنوا % % العليه قيد التراب سنا % % 5(@)(@@) % وانتهبوا ماله وشنوا % % الغارات فيما حواه شنا % % 6(@)(@@) % لمثل هذا فكن معدا % % ما قد اعد الهداة منا % % 7(@)(@@) % وارتقب الموت فهو حتم % % يخترم الطفل والمسنا % % PageV01P095